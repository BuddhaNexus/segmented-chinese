[
    {
        "source_sentence": "重刻禪源詮序重刻禪源詮序",
        "from": "T48n2015_001:0397b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道不能自鳴。假人而鳴。鳴雖不同。道則未嘗",
        "from": "T48n2015_001:0397b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不同也。苟不同不足以為道。如仲尼之一貫。",
        "from": "T48n2015_001:0397b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老聃之無為。",
        "from": "T48n2015_001:0397b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋氏之空寂。",
        "from": "T48n2015_001:0397b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人異道同。",
        "from": "T48n2015_001:0397b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此其證也。",
        "from": "T48n2015_001:0397b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況夫禪教兩宗同出於佛。",
        "from": "T48n2015_001:0397b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪佛心也。",
        "from": "T48n2015_001:0397b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教佛口也。",
        "from": "T48n2015_001:0397b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有心口自相矛盾者乎。",
        "from": "T48n2015_001:0397b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈何去聖時遙。",
        "from": "T48n2015_001:0397b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師承各異。",
        "from": "T48n2015_001:0397b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教者指禪為暗證。",
        "from": "T48n2015_001:0397b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪者目教為漸修。",
        "from": "T48n2015_001:0397b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明暗未得其公。",
        "from": "T48n2015_001:0397b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓漸罔知攸定。",
        "from": "T48n2015_001:0397b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迭為詆毀殆若仇讎。",
        "from": "T48n2015_001:0397b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非但鼓之空言。",
        "from": "T48n2015_001:0397b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抑且筆之簡冊。",
        "from": "T48n2015_001:0397b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世道日下。",
        "from": "T48n2015_001:0397b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弊將何如。",
        "from": "T48n2015_001:0397b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔圭峯禪師患之。",
        "from": "T48n2015_001:0397b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂將教禪諸祖著述章句旨意相符者。",
        "from": "T48n2015_001:0397b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集為一書。",
        "from": "T48n2015_001:0397b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰禪源諸詮。",
        "from": "T48n2015_001:0397b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以訓于世。",
        "from": "T48n2015_001:0397b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將使兩家學者知一佛無二道。",
        "from": "T48n2015_001:0397b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四河無異味。",
        "from": "T48n2015_001:0397b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言歸于好。",
        "from": "T48n2015_001:0397b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永無敗盟。",
        "from": "T48n2015_001:0397b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "源詮之功。",
        "from": "T48n2015_001:0397b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈易量哉。",
        "from": "T48n2015_001:0397b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予每見南方此弊尤甚。",
        "from": "T48n2015_001:0397b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安得人有是書一洗舊習。",
        "from": "T48n2015_001:0397b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸與惟新興念至此。",
        "from": "T48n2015_001:0397b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未嘗不廢食而歎也。",
        "from": "T48n2015_001:0397b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今雪堂總統大師。",
        "from": "T48n2015_001:0397b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有所契。",
        "from": "T48n2015_001:0397b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特捐衣長復新諸梓。",
        "from": "T48n2015_001:0397b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以廣流傳。",
        "from": "T48n2015_001:0397b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千里走書俾為序引。",
        "from": "T48n2015_001:0397b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裴公相國既述于前。",
        "from": "T48n2015_001:0397b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自視何人敢此凌躐以貽識者之誚。",
        "from": "T48n2015_001:0397b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而此書平生所愛慕者。",
        "from": "T48n2015_001:0397b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何幸挂名其間。",
        "from": "T48n2015_001:0397b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不讓也。",
        "from": "T48n2015_001:0397b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大德七年七月住崑山薦嚴無外惟大序。",
        "from": "T48n2015_001:0397b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重刻禪源詮序重刻禪源詮序禪源詮者。",
        "from": "T48n2015_001:0397b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐圭峯禪師之所作也。",
        "from": "T48n2015_001:0397b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛之道廣周法界。",
        "from": "T48n2015_001:0397c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而細入微塵。",
        "from": "T48n2015_001:0397c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非有非空。",
        "from": "T48n2015_001:0397c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無內無外。",
        "from": "T48n2015_001:0397c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之學禪者。",
        "from": "T48n2015_001:0397c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志窮實相。",
        "from": "T48n2015_001:0397c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以言語為苛纖。",
        "from": "T48n2015_001:0397c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設教者。",
        "from": "T48n2015_001:0397c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務覈真詮。",
        "from": "T48n2015_001:0397c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以空寂為誕肆。",
        "from": "T48n2015_001:0397c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離為異門。",
        "from": "T48n2015_001:0397c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫明統一。",
        "from": "T48n2015_001:0397c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈佛之道本然哉。",
        "from": "T48n2015_001:0397c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是以教三種證禪三宗。",
        "from": "T48n2015_001:0397c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂依性說相。",
        "from": "T48n2015_001:0397c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即息妄修心。",
        "from": "T48n2015_001:0397c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破相顯性。",
        "from": "T48n2015_001:0397c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即泯絕無寄。",
        "from": "T48n2015_001:0397c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯示真心。",
        "from": "T48n2015_001:0397c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即直明心性。",
        "from": "T48n2015_001:0397c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江漢殊流而同歸智海。",
        "from": "T48n2015_001:0397c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酸醎異調而共臻禪味。",
        "from": "T48n2015_001:0397c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於空宗性宗之別。",
        "from": "T48n2015_001:0397c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓修漸修之殊。",
        "from": "T48n2015_001:0397c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不會其指歸開示正覺。",
        "from": "T48n2015_001:0397c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然又慮末學之易惑而難悟也。",
        "from": "T48n2015_001:0397c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則又旁行為圖朱墨以志之。",
        "from": "T48n2015_001:0397c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自頓覺至成佛。",
        "from": "T48n2015_001:0397c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十重為淨。",
        "from": "T48n2015_001:0397c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自不覺至受報。",
        "from": "T48n2015_001:0397c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十重為染。",
        "from": "T48n2015_001:0397c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨染之源由於聖凡。",
        "from": "T48n2015_001:0397c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心法悉具真妄。",
        "from": "T48n2015_001:0397c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名藏識。",
        "from": "T48n2015_001:0397c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺則迷真逐妄歷劫輪迴。",
        "from": "T48n2015_001:0397c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓覺則舍妄歸真隨順解脫。",
        "from": "T48n2015_001:0397c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然學者要知真如闡教如標月指。",
        "from": "T48n2015_001:0397c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復見月。",
        "from": "T48n2015_001:0397c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知所標畢竟非月。",
        "from": "T48n2015_001:0397c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則詮圖兩忘。",
        "from": "T48n2015_001:0397c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚智通為般若。",
        "from": "T48n2015_001:0397c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垢淨俱證菩提。",
        "from": "T48n2015_001:0397c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳天台南侁北秀。",
        "from": "T48n2015_001:0397c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與達磨東來宗旨無有差別。",
        "from": "T48n2015_001:0397c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚何禪與教之分哉。",
        "from": "T48n2015_001:0397c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐大中時。",
        "from": "T48n2015_001:0397c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裴相國休為之敘。",
        "from": "T48n2015_001:0397c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復手書是圖。",
        "from": "T48n2015_001:0397c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付金州延昌寺。",
        "from": "T48n2015_001:0397c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後傳唯勁師。",
        "from": "T48n2015_001:0397c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再傳玄契師。",
        "from": "T48n2015_001:0397c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而圖行閩湘吳越間。",
        "from": "T48n2015_001:0397c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國朝至元十二年。",
        "from": "T48n2015_001:0397c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世祖御廣寒殿。",
        "from": "T48n2015_001:0397c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願問禪教要義。",
        "from": "T48n2015_001:0397c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝師及諸耆德。",
        "from": "T48n2015_001:0397c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以禪源詮對。",
        "from": "T48n2015_001:0397c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上意悅命板行於世。",
        "from": "T48n2015_001:0397c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後二十有九年為大德癸卯。",
        "from": "T48n2015_001:0397c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗣法雪堂仁禪師。",
        "from": "T48n2015_001:0397c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉旨之五臺。",
        "from": "T48n2015_001:0397c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回途過大同。",
        "from": "T48n2015_001:0397c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得金時潛菴覺公禪師所書圖。",
        "from": "T48n2015_001:0397c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益加考訂。",
        "from": "T48n2015_001:0397c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錦粹以傳諸遠。",
        "from": "T48n2015_001:0397c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾圭峯禪師研真顯正。",
        "from": "T48n2015_001:0397c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化導群迷之意。",
        "from": "T48n2015_001:0397c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永久不墜。",
        "from": "T48n2015_001:0397c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為利益何可稱量。",
        "from": "T48n2015_001:0397c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文原與師為方外交。",
        "from": "T48n2015_001:0397c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃隨喜讚歎為之次序其說書諸編首。",
        "from": "T48n2015_001:0397c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是歲閏月朔。",
        "from": "T48n2015_001:0397c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應奉翰林文字將仕佐郎同知制誥兼國史院編修官巴西鄧文原書。",
        "from": "T48n2015_001:0398a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重刻禪源詮序重刻禪源詮序雪堂禪師。",
        "from": "T48n2015_001:0398a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智識雄邁行解圓通。",
        "from": "T48n2015_001:0398a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜修為。",
        "from": "T48n2015_001:0398a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂施與。",
        "from": "T48n2015_001:0398a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日謂余曰。",
        "from": "T48n2015_001:0398a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚甞患世之學佛者。",
        "from": "T48n2015_001:0398a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不究如來設教之因妄執空有競分大小。",
        "from": "T48n2015_001:0398a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰頓曰漸曰禪曰律。",
        "from": "T48n2015_001:0398a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訾訾紛紛千數百年。",
        "from": "T48n2015_001:0398a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如護父足使具受病。",
        "from": "T48n2015_001:0398a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖遇一二同志有以啟之。",
        "from": "T48n2015_001:0398a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恨不能家喻而戶曉也。",
        "from": "T48n2015_001:0398a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸得圭峯所述禪源詮。",
        "from": "T48n2015_001:0398a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其文博雅其旨切當。",
        "from": "T48n2015_001:0398a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉敘前所患者道其所以然。",
        "from": "T48n2015_001:0398a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且作圖示心一真實諦含三大義。",
        "from": "T48n2015_001:0398a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明緣染諸相妄起。",
        "from": "T48n2015_001:0398a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依修斷法獲證入理。",
        "from": "T48n2015_001:0398a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提綱舉要如指諸掌。",
        "from": "T48n2015_001:0398a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔至元十二年春正月。",
        "from": "T48n2015_001:0398a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世祖皇帝萬機之暇。",
        "from": "T48n2015_001:0398a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御瓊華島延請帝師。",
        "from": "T48n2015_001:0398a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太保文貞劉公亦在焉。",
        "from": "T48n2015_001:0398a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃召在京耆宿問諸禪教乖互之義。",
        "from": "T48n2015_001:0398a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先師西菴贇公等八人。",
        "from": "T48n2015_001:0398a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因以圭峯禪源詮文為對。",
        "from": "T48n2015_001:0398a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "允愜宸衷。",
        "from": "T48n2015_001:0398a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當時先師囑其弟雙泉泰公為之記。",
        "from": "T48n2015_001:0398a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍命雪堂鏤板流行。",
        "from": "T48n2015_001:0398a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚以參問諸方。",
        "from": "T48n2015_001:0398a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未暇及此。",
        "from": "T48n2015_001:0398a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向於雲中普恩興國二寺各獲一本。",
        "from": "T48n2015_001:0398a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後在京萬壽方丈。",
        "from": "T48n2015_001:0398a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得遼朝崇天皇太后清寧八年印造頒行天下定本。",
        "from": "T48n2015_001:0398a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與文士較正擬欲刻梓以傳永久。",
        "from": "T48n2015_001:0398a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請敘一言庸伸先師遺志。",
        "from": "T48n2015_001:0398a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余聞之喜曰。",
        "from": "T48n2015_001:0398a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今子之心即圭峯師憂世之心也。",
        "from": "T48n2015_001:0398a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然不有斯文無以解其惑。",
        "from": "T48n2015_001:0398a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不壽其傳無以利其眾。",
        "from": "T48n2015_001:0398a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者覩之而情不遣解不生。",
        "from": "T48n2015_001:0398a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦何益矣。",
        "from": "T48n2015_001:0398a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古人所謂四難者。",
        "from": "T48n2015_001:0398a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今三難不具其一。",
        "from": "T48n2015_001:0398a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則在諸方參學者儻能不負二師弘法利人之念。",
        "from": "T48n2015_001:0398a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡心披玩。",
        "from": "T48n2015_001:0398b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情遣解生。",
        "from": "T48n2015_001:0398b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如王良總六轡馳通衢。",
        "from": "T48n2015_001:0398b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿師駕般若航登彼岸。",
        "from": "T48n2015_001:0398b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有不達者哉。",
        "from": "T48n2015_001:0398b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翰林待制朝列大夫同修。",
        "from": "T48n2015_001:0398b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國史賈汝舟序禪源諸詮集都序敘禪源諸詮集都序敘唐綿州刺史裴休述圭峯禪師集禪源諸詮為禪藏而都序之。",
        "from": "T48n2015_001:0398b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河東裴休曰。",
        "from": "T48n2015_001:0398b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未曾有也。",
        "from": "T48n2015_001:0398b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自如來現世隨機立教。",
        "from": "T48n2015_001:0398b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩間生據病指藥。",
        "from": "T48n2015_001:0398b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故一代時教。",
        "from": "T48n2015_001:0398b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開深淺之三門。",
        "from": "T48n2015_001:0398b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一真淨心。",
        "from": "T48n2015_001:0398b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演性相之別法。",
        "from": "T48n2015_001:0398b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬龍二士。",
        "from": "T48n2015_001:0398b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆弘調御之說。",
        "from": "T48n2015_001:0398b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而空性異宗。",
        "from": "T48n2015_001:0398b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能秀二師。",
        "from": "T48n2015_001:0398b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱傳達磨之心。",
        "from": "T48n2015_001:0398b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而頓漸殊稟。",
        "from": "T48n2015_001:0398b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荷澤直指知見。",
        "from": "T48n2015_001:0398b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江西一切皆真。",
        "from": "T48n2015_001:0398b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台專依三觀。",
        "from": "T48n2015_001:0398b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛頭無有一法。",
        "from": "T48n2015_001:0398b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其他空有相破。",
        "from": "T48n2015_001:0398b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真妄相收。",
        "from": "T48n2015_001:0398b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反奪順取。",
        "from": "T48n2015_001:0398b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密指顯說。",
        "from": "T48n2015_001:0398b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故天竺中夏其宗實繁。",
        "from": "T48n2015_001:0398b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良以病有千源藥生多品。",
        "from": "T48n2015_001:0398b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投機隨器不得一同。",
        "from": "T48n2015_001:0398b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖俱為證悟之門。",
        "from": "T48n2015_001:0398b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡是正真之道。",
        "from": "T48n2015_001:0398b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而諸宗門下通少局多。",
        "from": "T48n2015_001:0398b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故數十年來師法益壞。",
        "from": "T48n2015_001:0398b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以承稟為戶牖。",
        "from": "T48n2015_001:0398b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各自開張。",
        "from": "T48n2015_001:0398b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以經論為干戈。",
        "from": "T48n2015_001:0398b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相攻擊。",
        "from": "T48n2015_001:0398b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情隨函矢而遷變。",
        "from": "T48n2015_001:0398b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孟子曰。",
        "from": "T48n2015_001:0398b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矢人豈不仁於函人哉。",
        "from": "T48n2015_001:0398b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "函人唯恐傷人。",
        "from": "T48n2015_001:0398b23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矢人唯恐不傷人。",
        "from": "T48n2015_001:0398b23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋所習之術然也。",
        "from": "T48n2015_001:0398b23_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今學者但隨宗徒彼此相非耳。",
        "from": "T48n2015_001:0398b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "函字。",
        "from": "T48n2015_001:0398b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐韻。",
        "from": "T48n2015_001:0398b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從金䤴者。",
        "from": "T48n2015_001:0398b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鎧甲也。",
        "from": "T48n2015_001:0398b24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周禮。",
        "from": "T48n2015_001:0398b24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "函人為甲。",
        "from": "T48n2015_001:0398b24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即造甲之人。",
        "from": "T48n2015_001:0398b24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古字多單為之。",
        "from": "T48n2015_001:0398b24_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故孟子亦單作法逐人我以高低。",
        "from": "T48n2015_001:0398b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是非紛拏莫能辨析。",
        "from": "T48n2015_001:0398b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則向者世尊菩薩諸方教宗。",
        "from": "T48n2015_001:0398b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適足以起諍。",
        "from": "T48n2015_001:0398b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後人增煩惱病。",
        "from": "T48n2015_001:0398b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何利益之有哉。",
        "from": "T48n2015_001:0398b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圭峯大師久而歎曰。",
        "from": "T48n2015_001:0398b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾丁此時不可以默矣仲尼刪詩書正禮樂。",
        "from": "T48n2015_001:0398b28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆不得已而為之。",
        "from": "T48n2015_001:0398b28_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故述而不作。",
        "from": "T48n2015_001:0398b28_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃聖人貴道不貴跡。",
        "from": "T48n2015_001:0398b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意道吾久修當宗佛法。",
        "from": "T48n2015_001:0398b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今忽和會諸宗。",
        "from": "T48n2015_001:0398b29_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈欲立跡哉。",
        "from": "T48n2015_001:0398b29_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得已也。",
        "from": "T48n2015_001:0398b29_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丁當也。",
        "from": "T48n2015_001:0398b29_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正當須和會之時也於是以如來三種教義。",
        "from": "T48n2015_001:0398c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印禪宗三種法門。",
        "from": "T48n2015_001:0398c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "融瓶盤釵釧為一金。",
        "from": "T48n2015_001:0398c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攪酥酪醍醐為一味。",
        "from": "T48n2015_001:0398c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "振綱領而舉者皆順荀子云。",
        "from": "T48n2015_001:0398c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如振裘領。",
        "from": "T48n2015_001:0398c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈五指而頓之。",
        "from": "T48n2015_001:0398c03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順者不可勝數也據會要而來者同趨趨字平聲呼之。",
        "from": "T48n2015_001:0398c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周易略例云。",
        "from": "T48n2015_001:0398c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據會要以觀方來。",
        "from": "T48n2015_001:0398c04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則六合輻輳。",
        "from": "T48n2015_001:0398c04_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未足多也。",
        "from": "T48n2015_001:0398c04_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都序據圓教以印諸宗。",
        "from": "T48n2015_001:0398c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖百家亦無所不統也尚恐學者之難明也。",
        "from": "T48n2015_001:0398c05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復直示宗源之本末。",
        "from": "T48n2015_001:0398c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真妄之和合。",
        "from": "T48n2015_001:0398c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空性之隱顯。",
        "from": "T48n2015_001:0398c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法義之差殊。",
        "from": "T48n2015_001:0398c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓漸之異同。",
        "from": "T48n2015_001:0398c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮表之迴互。",
        "from": "T48n2015_001:0398c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權實之深淺。",
        "from": "T48n2015_001:0398c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通局之是非此下歎敘述顯。",
        "from": "T48n2015_001:0398c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明而丁寧。",
        "from": "T48n2015_001:0398c08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲人悟也莫不提耳而告之毛詩云。",
        "from": "T48n2015_001:0398c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "匪面命之言提其耳。",
        "from": "T48n2015_001:0398c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當時疾彼人不修德荒亂。",
        "from": "T48n2015_001:0398c09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言我不對面向汝說。",
        "from": "T48n2015_001:0398c09_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又提耳起耳。",
        "from": "T48n2015_001:0398c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就耳邊告汝。",
        "from": "T48n2015_001:0398c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝終不改也。",
        "from": "T48n2015_001:0398c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意說丁寧之甚指掌而示之論語云。",
        "from": "T48n2015_001:0398c10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知其說者之於天下也。",
        "from": "T48n2015_001:0398c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其如視諸斯乎指其掌。",
        "from": "T48n2015_001:0398c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言夫子語了指自手掌示弟子。",
        "from": "T48n2015_001:0398c11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言見此事分明。",
        "from": "T48n2015_001:0398c11_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如掌中之物易了嚬呻以吼之。",
        "from": "T48n2015_001:0398c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛軟以誘之此下歎慈悲憂念。",
        "from": "T48n2015_001:0398c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如養赤子也。",
        "from": "T48n2015_001:0398c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乳而藥之。",
        "from": "T48n2015_001:0398c12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憂佛種之夭傷也無少善根而作闡提。",
        "from": "T48n2015_001:0398c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夭傷也。",
        "from": "T48n2015_001:0398c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腹而擁之毛詩云。",
        "from": "T48n2015_001:0398c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腹我顧我。",
        "from": "T48n2015_001:0398c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言慈母念幼子。",
        "from": "T48n2015_001:0398c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腹中抱我。",
        "from": "T48n2015_001:0398c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫起去又回頭顧我念惜之深也。",
        "from": "T48n2015_001:0398c14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念水火之漂焚也欲是水火挈而導之懼邪小之迷陷也既有善根。",
        "from": "T48n2015_001:0398c15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又離五欲。",
        "from": "T48n2015_001:0398c15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復恐不入於大乘也揮而散之。",
        "from": "T48n2015_001:0398c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲鬪爭之牢固也。",
        "from": "T48n2015_001:0398c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明不能破長夜之昏。",
        "from": "T48n2015_001:0398c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈母不能保身後之子此下歎悲智與佛同也。",
        "from": "T48n2015_001:0398c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛日雖盛。",
        "from": "T48n2015_001:0398c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得吾師然後回光曲照。",
        "from": "T48n2015_001:0398c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛慈悲雖普。",
        "from": "T48n2015_001:0398c18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得吾師然後弘益彌多若吾師者。",
        "from": "T48n2015_001:0398c18_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧佛日而委曲回照。",
        "from": "T48n2015_001:0398c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑曀盡除。",
        "from": "T48n2015_001:0398c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順佛心而橫亘大悲。",
        "from": "T48n2015_001:0398c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮劫蒙益。",
        "from": "T48n2015_001:0398c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則世尊為闡教之主。",
        "from": "T48n2015_001:0398c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾師為會教之人。",
        "from": "T48n2015_001:0398c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本末相扶。",
        "from": "T48n2015_001:0398c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近相照。",
        "from": "T48n2015_001:0398c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂畢一代時教之能事矣自世尊演教至今日。",
        "from": "T48n2015_001:0398c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會而通之。",
        "from": "T48n2015_001:0398c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能事方畢。",
        "from": "T48n2015_001:0398c22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或曰。",
        "from": "T48n2015_001:0398c22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自如來未嘗大都而通之。",
        "from": "T48n2015_001:0398c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今一旦違宗趣而不守。",
        "from": "T48n2015_001:0398c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廢關防而不據。",
        "from": "T48n2015_001:0398c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無乃乖祕藏密契之道乎。",
        "from": "T48n2015_001:0398c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "T48n2015_001:0398c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛於法華涅槃會中。",
        "from": "T48n2015_001:0398c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦已融為一味。",
        "from": "T48n2015_001:0398c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但昧者不覺。",
        "from": "T48n2015_001:0398c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故涅槃經。",
        "from": "T48n2015_001:0398c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩曰。",
        "from": "T48n2015_001:0398c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛有密語無密藏。",
        "from": "T48n2015_001:0398c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊讚之曰。",
        "from": "T48n2015_001:0398c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來之言。",
        "from": "T48n2015_001:0398c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開發顯露清淨無翳。",
        "from": "T48n2015_001:0399a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人不解。",
        "from": "T48n2015_001:0399a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為之祕藏。",
        "from": "T48n2015_001:0399a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者了達則不名藏。",
        "from": "T48n2015_001:0399a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此其證也。",
        "from": "T48n2015_001:0399a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故王道興則外戶不閉而守在戎夷。",
        "from": "T48n2015_001:0399a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛道備則諸法總持而防在魔外涅槃圓教和會諸法。",
        "from": "T48n2015_001:0399a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯簡別魔說及外道邪宗耳不當復執情攘臂於其間也。",
        "from": "T48n2015_001:0399a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼後之學者。",
        "from": "T48n2015_001:0399a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取信於佛。",
        "from": "T48n2015_001:0399a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無取信於人。",
        "from": "T48n2015_001:0399a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取證於本法。",
        "from": "T48n2015_001:0399a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無取證於末習。",
        "from": "T48n2015_001:0399a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都序。",
        "from": "T48n2015_001:0399a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛語印諸宗以本法照偏說。",
        "from": "T48n2015_001:0399a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故丁寧勸其深信能如是則不孤圭峯劬勞之德矣哀哀父母生我劬勞。",
        "from": "T48n2015_001:0399a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾師之德。",
        "from": "T48n2015_001:0399a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過於是矣。",
        "from": "T48n2015_001:0399a08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之人觀其法而不生悲感。",
        "from": "T48n2015_001:0399a08_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木石無異。",
        "from": "T48n2015_001:0399a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且須保重也。",
        "from": "T48n2015_001:0399a09_9",
        "context_with_next_sentence": true
    }
]