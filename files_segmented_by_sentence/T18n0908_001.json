[
    {
        "source_sentence": "金剛頂瑜伽護摩儀軌一卷",
        "from": "T18n0908_001:0916a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T18n0908_001:0916a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空諡大鑒",
        "from": "T18n0908_001:0916a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說護摩，　　由此速成就，",
        "from": "T18n0908_001:0916a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由護摩業儀，　　相應不間斷，",
        "from": "T18n0908_001:0916a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切事，　　隨明當應作，",
        "from": "T18n0908_001:0916a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨類作護摩，　　無上成就業。",
        "from": "T18n0908_001:0916a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩說多種，　　略說有五類，",
        "from": "T18n0908_001:0916a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣說大瑜伽，　　於祕密教說，",
        "from": "T18n0908_001:0916a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今則略說，　　持明之遊戲，",
        "from": "T18n0908_001:0916a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由護摩儀軌，　　成就於族壇。",
        "from": "T18n0908_001:0916a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩五種事，　　一一有多種，",
        "from": "T18n0908_001:0916a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災及增益，　　第三為降伏，",
        "from": "T18n0908_001:0916a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召為第四，　　第五是敬愛，",
        "from": "T18n0908_001:0916a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五護摩，　　敬愛為最勝。",
        "from": "T18n0908_001:0916a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說軍茶，　　依瑜伽相應，",
        "from": "T18n0908_001:0916a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災爐正圓，　　應當如是作，",
        "from": "T18n0908_001:0916a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益應正方，　　三角作降伏，",
        "from": "T18n0908_001:0916a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛形軍茶，　　鉤召為最勝，",
        "from": "T18n0908_001:0916a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長作蓮花形，　　敬愛為相應，",
        "from": "T18n0908_001:0916a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已說五種類，　　軍茶業無上。",
        "from": "T18n0908_001:0916a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災初夜起，　　增益初日分，",
        "from": "T18n0908_001:0916a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中日分應作，　　降伏猛利法，",
        "from": "T18n0908_001:0916a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召一切時，　　後夜作敬愛，",
        "from": "T18n0908_001:0916a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五瑜伽，　　作業而等引。",
        "from": "T18n0908_001:0916b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面北作息災，　　增益向東方，",
        "from": "T18n0908_001:0916b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面南作降伏，　　應面西而住，",
        "from": "T18n0908_001:0916b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰視遍諸方，　　是為鉤召儀；",
        "from": "T18n0908_001:0916b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若敬愛相應，　　應住面向西。",
        "from": "T18n0908_001:0916b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災結佛印，　　增益寶幖幟，",
        "from": "T18n0908_001:0916b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛怒降伏，　　金剛鉤鉤召，",
        "from": "T18n0908_001:0916b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大召而相應，　　敬愛蓮花部，",
        "from": "T18n0908_001:0916b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五瑜伽，　　應作護摩事。",
        "from": "T18n0908_001:0916b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災燒甘木，　　增益用果木，",
        "from": "T18n0908_001:0916b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦木降伏業，　　刺木為鉤召，",
        "from": "T18n0908_001:0916b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花木說敬愛，　　如是五種木，",
        "from": "T18n0908_001:0916b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑜伽者應用。",
        "from": "T18n0908_001:0916b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益三股杵，　　降伏一股作，",
        "from": "T18n0908_001:0916b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召應作鉤，　　敬愛作蓮花。",
        "from": "T18n0908_001:0916b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災爐應量，　　橫全竪半肘，",
        "from": "T18n0908_001:0916b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益兩肘量，　　竪量應用半，",
        "from": "T18n0908_001:0916b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏軍茶相，　　三角各一肘，",
        "from": "T18n0908_001:0916b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪量應半之，　　鉤召長一肘，",
        "from": "T18n0908_001:0916b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫竪各減半，　　敬愛亦一肘，",
        "from": "T18n0908_001:0916b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫竪如鉤召。",
        "from": "T18n0908_001:0916b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應畫作三重，　　中院羯磨杵，",
        "from": "T18n0908_001:0916b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隅畫蓮葉，　　第二院四契，",
        "from": "T18n0908_001:0916b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂四波羅蜜，　　四隅內供養，",
        "from": "T18n0908_001:0916b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三院應畫，　　八方天眷屬，",
        "from": "T18n0908_001:0916b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隅於四門，　　外供養四攝，",
        "from": "T18n0908_001:0916b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中安遍照尊，　　此息災軍茶，",
        "from": "T18n0908_001:0916b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘四軍茶相，　　三院皆如是。",
        "from": "T18n0908_001:0916b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益於中院，　　應畫羯磨寶，",
        "from": "T18n0908_001:0916b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隅畫蓮葉，　　第二院應畫，",
        "from": "T18n0908_001:0916c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶生佛眷屬，　　第三院及門，",
        "from": "T18n0908_001:0916c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如前所說。",
        "from": "T18n0908_001:0916c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨股羯磨杵，　　四隅畫蓮葉，",
        "from": "T18n0908_001:0916c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二院應畫，　　降三世眷屬，",
        "from": "T18n0908_001:0916c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種忿怒相，　　第三院及門，",
        "from": "T18n0908_001:0916c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如前所說，　　而皆忿怒相。",
        "from": "T18n0908_001:0916c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召於中院，　　應畫金剛鉤，",
        "from": "T18n0908_001:0916c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隅畫蓮華，　　第二院應畫，",
        "from": "T18n0908_001:0916c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動佛眷屬，　　第三院四隅，",
        "from": "T18n0908_001:0916c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八方及四門，　　如初軍茶知。",
        "from": "T18n0908_001:0916c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛於中院，　　畫蓮花羯磨，",
        "from": "T18n0908_001:0916c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隅三股杵，　　第二院應畫，",
        "from": "T18n0908_001:0916c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量壽眷屬，　　應畫四種尊，",
        "from": "T18n0908_001:0916c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三院四隅，　　八方及四門，",
        "from": "T18n0908_001:0916c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說亦如前。",
        "from": "T18n0908_001:0916c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　此是五護摩，瑜伽經所說，　　修行者應知。",
        "from": "T18n0908_001:0916c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四契及四攝，　　內外八供養，",
        "from": "T18n0908_001:0916c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布列在壇位，　　阿闍梨今說，",
        "from": "T18n0908_001:0916c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人南方坐，　　金剛應在南，",
        "from": "T18n0908_001:0916c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶部而在西，　　法契當北面，",
        "from": "T18n0908_001:0916c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯磨在東方，　　嬉戲西南隅，",
        "from": "T18n0908_001:0916c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬘應西北角，　　歌契處東北，",
        "from": "T18n0908_001:0916c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舞印在東南，　　燒香如嬉戲，",
        "from": "T18n0908_001:0916c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花供准鬘方，　　燈應如歌詠，",
        "from": "T18n0908_001:0916c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香如舞位，　　鉤在金剛後，",
        "from": "T18n0908_001:0916c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "索與寶部對，　　鎖應隨法契，",
        "from": "T18n0908_001:0916c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈴如羯磨知，　　隨行人右旋，",
        "from": "T18n0908_001:0916c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸壇當如是，　　循環而安立。",
        "from": "T18n0908_001:0916c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災第二院，　　四波羅蜜契，",
        "from": "T18n0908_001:0917a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛三股杵，　　寶契如寶形，",
        "from": "T18n0908_001:0917a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法如獨股杵，　　上戴開敷蓮，",
        "from": "T18n0908_001:0917a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯磨羯磨杵，　　嬉戲三股杵，",
        "from": "T18n0908_001:0917a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬘如寶冠形，　　歌應畫箜篌，",
        "from": "T18n0908_001:0917a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舞獨股羯磨，　　鉤為金剛鉤，",
        "from": "T18n0908_001:0917a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "索如盤索勢，　　一頭半獨股，",
        "from": "T18n0908_001:0917a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而在於中心，　　鎖如並兩環，",
        "from": "T18n0908_001:0917a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中如連環，　　鈴作金剛鈴，",
        "from": "T18n0908_001:0917a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈作蠟燭相，　　塗香畫香器，",
        "from": "T18n0908_001:0917a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香作香爐，　　散花為花盤。",
        "from": "T18n0908_001:0917a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益第二院，　　寶生尊眷屬，",
        "from": "T18n0908_001:0917a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光相如日形，　　笑如橫三股，",
        "from": "T18n0908_001:0917a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中間安齒，　　幢如竪寶幢，",
        "from": "T18n0908_001:0917a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏四忿怒，　　薩埵三股杵，",
        "from": "T18n0908_001:0917a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王如並二鉤，　　善哉並雙手，",
        "from": "T18n0908_001:0917a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以作彈指相，　　愛如竪弓箭。",
        "from": "T18n0908_001:0917a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召第二院，　　亦如降伏壇，",
        "from": "T18n0908_001:0917a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無有增減。",
        "from": "T18n0908_001:0917a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量壽眷屬，　　法如法波羅，",
        "from": "T18n0908_001:0917a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利當為劍形，　　語應畫舌相，",
        "from": "T18n0908_001:0917a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因作日輪形，　　中獨股羯磨，",
        "from": "T18n0908_001:0917a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延命如增益，　　爐外畫甲冑，",
        "from": "T18n0908_001:0917a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人被甲形，　　而令雙袖垂，",
        "from": "T18n0908_001:0917a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "袖如三獨股，　　下如覆熏籠，",
        "from": "T18n0908_001:0917a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上作三峯形，　　如三獨股杵，",
        "from": "T18n0908_001:0917a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外八供養，　　及與四護等，",
        "from": "T18n0908_001:0917a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸爐皆如一，　　一一所畫契，",
        "from": "T18n0908_001:0917a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆坐蓮花上，　　而有火焰光。",
        "from": "T18n0908_001:0917a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八方天眷屬，　　亦如諸契等，",
        "from": "T18n0908_001:0917b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆隨行人座，　　而起於東方。",
        "from": "T18n0908_001:0917b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋獨股杵，　　繒繫左右飛，",
        "from": "T18n0908_001:0917b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火天畫軍持，　　蓮座上火焰，",
        "from": "T18n0908_001:0917b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焰摩兩股叉，　　其中安人頭，",
        "from": "T18n0908_001:0917b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繒飛如帝釋，　　羅剎主畫刀，",
        "from": "T18n0908_001:0917b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座焰如火天，　　水天畫羂索，",
        "from": "T18n0908_001:0917b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩頭猶股頭，　　風天作幡旗，",
        "from": "T18n0908_001:0917b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而坐蓮花中，　　毘沙門作棒，",
        "from": "T18n0908_001:0917b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繒繫亦如上，　　舍那半三股，",
        "from": "T18n0908_001:0917b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮座火焰光。",
        "from": "T18n0908_001:0917b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　智者應善知，審諦無錯謬。",
        "from": "T18n0908_001:0917b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其爐緣高兩指闊四指，緣內爐口本地，闊兩指，於中契印高兩指，其爐近身，開竪項，闊四指長兩指，次橫長十指竪闊四指，次作蓮花葉形令大小相稱，從竪項至葉末都十二指，高下並與緣齊，五種爐並同，其治地法如大曼茶羅，掘地加持所用鍬等印，二羽金剛縛，禪智進力各相並竪，真言二十一遍真言曰：",
        "from": "T18n0908_001:0917b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵儞佉那嚩蘇上提薩嚩二合引訶」加持泥及瞿摩夷塗香等印，二羽合掌，屈進力戒，方二節相合，禪智並竪，去進力令如口形，真言二十一遍真言曰：",
        "from": "T18n0908_001:0917b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵阿上蜜哩二合都納婆上二合嚩野吽發吒薩嚩二合訶」加持五色粉印及真言，並如《瑜伽經》所說。",
        "from": "T18n0908_001:0917b27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持酥蜜酪乳及木五穀香花等，並以金剛羯磨菩薩真言，加持各七遍。",
        "from": "T18n0908_001:0917b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印，二羽各以禪智捻檀慧甲，餘三度磔開竪，如金剛杵形，即相叉，右押左，真言曰：",
        "from": "T18n0908_001:0917c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵嚩日囉二合羯磨撿」所燒護摩支皆安右邊，酥於蓮葉臺上，蜜酪乳乳糜飯等，近爐右邊安，左邊置二器盛香水器用金銀銅白瓷，商佉等並通用，香用白檀欝金龍腦等，二器一用灑淨火及供養物等，一用聖眾火天漱口。",
        "from": "T18n0908_001:0917c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑淨印，禪捻檀甲，餘三度磔開竪，如三股杵形，以灑水，真言曰：",
        "from": "T18n0908_001:0917c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵阿蜜哩二合諦吽發吒」漱口印，右羽金剛拳，舒進度攪水，加持七遍訖，便屈四度作掬，抄水垂臂，合掌向身，右旋灑火。",
        "from": "T18n0908_001:0917c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0908_001:0917c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵嚩囉娜嚩日囉二合引曇」息災本尊火天及爐衣服食香花，皆用白，作吉祥坐，與慈心相應交兩脚竪膝右壓左；",
        "from": "T18n0908_001:0917c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益皆用黃，全跏坐；",
        "from": "T18n0908_001:0917c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏皆用黑，蹲踞坐；",
        "from": "T18n0908_001:0917c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召皆用赤半跏坐；",
        "from": "T18n0908_001:0917c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛色同鉤召賢坐跂物垂脚。",
        "from": "T18n0908_001:0917c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎請從三昧耶至迎請，皆依本法，或隨五種護摩，隨部部主五相成身。",
        "from": "T18n0908_001:0918a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎請已，誦讚歎，以四攝安立聖眾，圍遶爐，然後獻閼伽，各結本羯磨印安立，示本三昧耶，誦護摩真言一百八遍，然後取一花，以火天真言加持三遍或七遍擲火中，然後結火天印，以左羽握右羽腕，右羽舒掌向外，屈禪度橫在掌中，進度如鉤來去，招以迎請。",
        "from": "T18n0908_001:0918a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻已以禪捻進度，即成發遣。",
        "from": "T18n0908_001:0918a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0908_001:0918a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵翳呬翳呬摩訶部多泥上嚩哩使二合儞尾二合惹薩哆摩孽哩二合呬怛嚩二合虎帝摩訶囉麼悉紙平珊儞呬都婆嚩阿誐那二合曳訶微也二合迦微也二合嚩訶娜耶娑嚩二合訶引」迎已以香水三灑，三漱口，然後用本真言，以大杓三滿酌酥投火，想投火天口中，至於心蓮花。",
        "from": "T18n0908_001:0918a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰加持花亦用此：",
        "from": "T18n0908_001:0918a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵阿誐那二合曳娑嚩二合引訶」即以此真言，小杓三投蜜酪乳及木乃至香花等，想火天四臂：",
        "from": "T18n0908_001:0918a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手無畏，第二手持珠，左手仙杖，第二手執軍持。",
        "from": "T18n0908_001:0918a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想從心遍身中，流出無量塗香雲、花雲、燒香雲、飲食燈明種種供養，供養一切佛菩薩緣覺聲聞及一切世天，於火天真言娑嚩訶上，稱所求事投之，然以大杓三滿投供養，加持一花置本方坐處，請出爐還本座，然後三淨火，以四字明迎請佛菩薩，各坐本座，三獻漱口，以滿三大杓酥獻，然後復以杓三酌蜜酪乳乳糜飯，及木五穀花香等，各三投，想投聖尊口中至心，若作息災法，五穀中須十倍加油麻，木用一百八枚，或五十四或二十一。",
        "from": "T18n0908_001:0918b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0908_001:0918b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵薩嚩播波娜訶那嚩日囉二合耶娑嚩二合引訶引」或有教中說，用本部母真言為息災，或本尊真言，或毘盧遮那真言，皆娑嚩訶上加所為，自他願除一切災語，心專注於爐中聖眾，想聖眾皆從心外，遍身毛孔流出供養雲海，至無邊世界，供養一切佛，及除一切三惡趣苦惱。",
        "from": "T18n0908_001:0918b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩已，以滿三大杓酥，獻聖眾，所殘五穀香花等，聚一器中，獻十方世天，餘爐並同。",
        "from": "T18n0908_001:0918b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作增益，如前迎火天，即獻聖眾三大杓木及香花等，並如前燒粳米，或欲延命燒屈蔞草，其延命爐如前增益爐，外作甲冑形，餘香花等並如前，唯粳米屈蔞草，加餘物十倍。",
        "from": "T18n0908_001:0918b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益真言曰：",
        "from": "T18n0908_001:0918b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵嚩日囉二合引補瑟吒二合曳平娑嚩二合引訶」延命契，二羽各金剛拳，舒進力相鉤置頂上，想身為降三世，於印上想毘盧遮那佛，從身中流出天甘露，灌注行人身。",
        "from": "T18n0908_001:0918b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延命真言曰：",
        "from": "T18n0908_001:0918b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵嚩日囉二合喻曬師皆反娑嚩二合引訶」於娑嚩訶上，加為自他願增益或延命語，或當時心所願，安如是語。",
        "from": "T18n0908_001:0918b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心專注於爐中聖眾，想從聖眾心外，遍身毛孔中，流出供養雲海，至無邊世界，供養一切佛，及光明照觸一切有情六道四生，皆獲榮盛富貴及延壽命。",
        "from": "T18n0908_001:0918c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以此光明，想自宅中雨七寶及所資用物，又想天甘露，灌注自身周遍毛孔。",
        "from": "T18n0908_001:0918c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作降伏法，如前迎火天，或用蔓菁或芥子等油，或水牛酥或用嚕地囉，先獻聖眾三大杓已，用無香花及臭花安悉香鹽毒藥等，或用鐵末，或作彼形，段段截投之芥子蠟鹽毒藥等作。",
        "from": "T18n0908_001:0918c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投火天時，即想從火天心外，遍身中流出器仗投彼身上，想火天及本尊，皆作忿怒形。",
        "from": "T18n0908_001:0918c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0908_001:0918c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「吽嚩日囉二合薩怛嚩二合耶發吒半音」於發上，加彼名號，或用本尊法，或用不動尊真言，或降三世真言，或文殊師利六足尊真言。",
        "from": "T18n0908_001:0918c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想忿怒尊身中，流出器仗雲海，供養盡虛空一切忿怒尊，即此器仗落彼上及家。",
        "from": "T18n0908_001:0918c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作鉤召法，迎請火天，及所用木花等物皆如增益，唯花用有刺木赤花，或用本尊法中所燒物。",
        "from": "T18n0908_001:0919a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0908_001:0919a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「吽嚩日囉二合羯哩灑二合耶弱」於弱上，加彼人名，即想從本尊心外，遍身流出無量金剛鉤，供養盡虛空一切佛菩薩賢聖，即想比鉤，鉤召三惡趣有情，安置人天善處，即以此眾鉤，入彼心召來。",
        "from": "T18n0908_001:0919a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作敬愛法，迎請及所用物並同上，唯花用赤色花，或用本尊法中所用物。",
        "from": "T18n0908_001:0919a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0908_001:0919a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「吽嚩日囉二合勿捨野弱」於弱上，加彼名號，即想本尊身中流出花箭，遍無量世界，供養一切佛賢聖，及射聲聞緣覺厭離心，及六道四生互增恚心，即以此眾箭射彼人五處所謂額兩乳心及下分。",
        "from": "T18n0908_001:0919a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡諸爐，若無酥用乳亦得。",
        "from": "T18n0908_001:0919a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遙加持人，或抄名或取前人衣，標心而加持。",
        "from": "T18n0908_001:0919a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養聖眾已，用大杓三滿杓獻聖眾，并三灑三漱，即取小杓，以滅三惡趣真言，為一切有情，護摩七遍或二七或三七。",
        "from": "T18n0908_001:0919a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0908_001:0919a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵嚩日囉二合波尼尾薩普吒耶薩嚩跛耶滿陀娜儞鉢囉謀訖灑二合耶薩嚩跛耶誐帝毘藥二合薩嚩薩怛挽薩嚩怛他誐多嚩日囉二合三麼耶吽怛囉吒半聲」即心奉送聖眾還本座，即以四字明，引十方世天入爐中，依前三灑漱，即以所殘香花五穀酥蜜等，投火各誦本真言一遍或三遍，各於薩嚩訶上，加所求事，即結聖眾羯磨及三昧耶契，誦讚歎發願，結降三世，左旋解界，即奉送。",
        "from": "T18n0908_001:0919a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如念誦法，即出道場，於道場外八方，敷茅草或蓮葉或諸餘青草，或塗圓壇為十位，於帝釋右左，置梵天、地天位，與八方而十。",
        "from": "T18n0908_001:0919b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若道場外無置位處，即於道場前閑靜處為方界，於中布八方，於中央布兩位，置梵天、地天。",
        "from": "T18n0908_001:0919b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以施十方天食，應用雜粥，所謂粳米油麻菉豆相和煮，令極清淨香美，盛一器中，每座先置一淨葉，循環率置葉上。",
        "from": "T18n0908_001:0919b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以淨瓶盛香水，即瀉少香水於葉上以獻。",
        "from": "T18n0908_001:0919b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以右手中無名二指，彈少塗香以獻。",
        "from": "T18n0908_001:0919b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻一花置之於座。",
        "from": "T18n0908_001:0919b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻燒香，以爐焚香於座前，獻諸座同此一爐。",
        "from": "T18n0908_001:0919b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次率一杓粥，置葉上以獻。",
        "from": "T18n0908_001:0919b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次用小蠟燭或紙燭以獻，便插粥上。",
        "from": "T18n0908_001:0919b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從香水至燭，各以本真言加持三遍，每位從水至燭獻畢，然向其次，其燭作意獻，諸位未遍已來，不用令滅，須助伴或驅使數人各執一物以供事，若一一自取，即燭必不終事。",
        "from": "T18n0908_001:0919b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每位於薩嚩訶上，加所求願語。",
        "from": "T18n0908_001:0919b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方天帝釋真言曰：",
        "from": "T18n0908_001:0919b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引印捺囉二合耶娑嚩二合引訶引」東南方火天真言曰：",
        "from": "T18n0908_001:0919b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三滿多沒馱南阿誐那二合曳娑嚩二合訶」南方焰摩天真言曰：",
        "from": "T18n0908_001:0919b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南焰摩耶娑嚩二合訶引」西南方羅剎主天真言曰：",
        "from": "T18n0908_001:0919b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引乃哩底曳娑嚩二合訶引」西方水天真言曰：",
        "from": "T18n0908_001:0919b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引嚩嚕拏引野娑嚩二合訶引」西北方風天真言曰：",
        "from": "T18n0908_001:0919c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引嚩耶吠微洗反娑嚩二合訶」北方毘沙門天真言曰：",
        "from": "T18n0908_001:0919c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引吠室囉二合嚩拏娑嚩二合引訶引」東北方伊舍那天真言曰：",
        "from": "T18n0908_001:0919c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引伊舍那耶娑嚩二合訶引」上方梵天真言曰：",
        "from": "T18n0908_001:0920a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引沒囉二合㕉憨上麼寧尼奚反娑嚩二合引訶」下方地天真言曰：",
        "from": "T18n0908_001:0920a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引畢哩二合體地以反微曳二合娑嚩二合引訶引」七曜真言曰：",
        "from": "T18n0908_001:0920a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引孽囉二合醯濕嚩二合哩耶鉢囉二合跛多而渝二合底丁巳反麼耶娑嚩二合訶引」二十八宿真言曰：",
        "from": "T18n0908_001:0920a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南莫三曼多沒馱南引諾乞灑二合怛囉二合涅寧吉反那佉曳娑嚩二合訶如是從東方至此歸命並同」於八方中，加兩位，與上下天對，曜東宿西，諸獻並同，若須別祀獨用亦得。",
        "from": "T18n0908_001:0920a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若護摩壇中，各依本方標心令住，亦不設位。",
        "from": "T18n0908_001:0920a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說三波多護摩法。",
        "from": "T18n0908_001:0920a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安所成就物於酥器前，或物大，即安於右邊或左邊，行人自身、酥器、及物，并爐、聖眾，如是為五集，循環次第應安立。",
        "from": "T18n0908_001:0920a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取小杓滿杓酥，加於所成物上，誦真言至薩嚩字，即舉杓投火，與訶聲俱下，便長引訶聲，令杓却至物上，訶聲方絕，遍別如此。",
        "from": "T18n0908_001:0920a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若加持人，即安杓頭上。",
        "from": "T18n0908_001:0920a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若用本尊真言，無薩嚩訶字者，當加之而誦，餘如上所說。",
        "from": "T18n0908_001:0920a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說杓相儀軌。",
        "from": "T18n0908_001:0920a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今次應說，　　注杓瀉杓相，",
        "from": "T18n0908_001:0920a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此住成就，　　持誦者速疾。",
        "from": "T18n0908_001:0920b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "注杓一肘量，　　法木令堅密，",
        "from": "T18n0908_001:0920b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無孔穴應作，　　口應妙端嚴，",
        "from": "T18n0908_001:0920b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫當四指量，　　深量用一指，",
        "from": "T18n0908_001:0920b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形如吉祥字，　　於中三股杵，",
        "from": "T18n0908_001:0920b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應令極端嚴，　　柄圍足人把，",
        "from": "T18n0908_001:0920b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近口與柄末，　　應作蓮花文，",
        "from": "T18n0908_001:0920b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瀉杓長及圓，　　并及刻鏤文，",
        "from": "T18n0908_001:0920b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆如注杓相，　　木亦如前說，",
        "from": "T18n0908_001:0920b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或用佉陀羅，　　口用禪上節，",
        "from": "T18n0908_001:0920b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋匝為其量，　　橫應一寸餘，",
        "from": "T18n0908_001:0920b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深量當半之，　　於中作蓮花，",
        "from": "T18n0908_001:0920b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦或金剛杵。",
        "from": "T18n0908_001:0920b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "注瀉二杓相，　　是大仙所說，",
        "from": "T18n0908_001:0920b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求悉地應作，　　持誦修行人。",
        "from": "T18n0908_001:0920b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛頂瑜伽護摩儀軌一卷",
        "from": "T18n0908_001:0920b16_100",
        "context_with_next_sentence": false
    }
]