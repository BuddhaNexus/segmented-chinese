[
    {
        "source_sentence": "阿育王經卷第五",
        "from": "T50n2043_005:0147c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁扶南三藏僧伽婆羅譯",
        "from": "T50n2043_005:0147c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "5 半菴摩勒施僧因緣品半菴摩勒施僧因緣品第五",
        "from": "T50n2043_005:0147c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時阿育王得堅固信問諸比丘。",
        "from": "T50n2043_005:0147c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰已能於佛法之中最大布施。",
        "from": "T50n2043_005:0147c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸比丘答言。",
        "from": "T50n2043_005:0147c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孤獨長者已大布施。",
        "from": "T50n2043_005:0147c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王復問言。",
        "from": "T50n2043_005:0147c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其能幾許佛法中施。",
        "from": "T50n2043_005:0147c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘答言。",
        "from": "T50n2043_005:0147c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用百千萬金。",
        "from": "T50n2043_005:0147c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿育王聞即便思惟。",
        "from": "T50n2043_005:0147c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孤獨長者用百千萬金。",
        "from": "T50n2043_005:0147c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於今者亦以百千萬金以用布施。",
        "from": "T50n2043_005:0147c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿育大王已起八萬四千塔。",
        "from": "T50n2043_005:0147c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於初生得道轉法輪入涅槃及諸羅漢涅槃之處。",
        "from": "T50n2043_005:0147c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各以十萬金施。",
        "from": "T50n2043_005:0147c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四部大會亦已作訖。",
        "from": "T50n2043_005:0147c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又三十萬眾僧一分阿羅漢二分學人及精進凡夫。",
        "from": "T50n2043_005:0147c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一日中一時施食。",
        "from": "T50n2043_005:0147c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又阿育王唯留珍寶。",
        "from": "T50n2043_005:0147c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大地宮人大臣鳩那羅。",
        "from": "T50n2043_005:0147c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以自身悉施眾僧。",
        "from": "T50n2043_005:0147c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以四十萬金布施眾僧。",
        "from": "T50n2043_005:0147c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以無數之金贖此大地。",
        "from": "T50n2043_005:0147c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至自身後以九十六千萬金布施眾僧。",
        "from": "T50n2043_005:0147c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿育王得病困篤生大憂惱。",
        "from": "T50n2043_005:0147c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大臣成護。",
        "from": "T50n2043_005:0147c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是其先世隨喜施沙知識。",
        "from": "T50n2043_005:0147c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞大王病。",
        "from": "T50n2043_005:0147c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便往王所而禮王足。",
        "from": "T50n2043_005:0147c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說偈言。",
        "from": "T50n2043_005:0147c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔面如蓮花　　塵垢不能污",
        "from": "T50n2043_005:0148a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大力諸怨家　　不得見大王",
        "from": "T50n2043_005:0148a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如日炎盛　　人所不能視",
        "from": "T50n2043_005:0148a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故於今者　　悲泣而流淚",
        "from": "T50n2043_005:0148a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿育王以偈答言。",
        "from": "T50n2043_005:0148a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今生憂惱　　不為身命財",
        "from": "T50n2043_005:0148a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別離聖眾故　　是以我憂惱",
        "from": "T50n2043_005:0148a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊諸弟子　　成就諸功德",
        "from": "T50n2043_005:0148a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種飲食　　日日常供養",
        "from": "T50n2043_005:0148a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當思惟此事　　是故我流淚",
        "from": "T50n2043_005:0148a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次成護。",
        "from": "T50n2043_005:0148a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我昔欲以百千萬金供養三寶。",
        "from": "T50n2043_005:0148a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而意未滿。",
        "from": "T50n2043_005:0148a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今欲以四十千萬金布施滿我本心。",
        "from": "T50n2043_005:0148a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟已便欲遣四十千萬金送與鷄寺。",
        "from": "T50n2043_005:0148a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時鳩那羅兒名三波地翻具足為太子。",
        "from": "T50n2043_005:0148a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大臣語太子言。",
        "from": "T50n2043_005:0148a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿育大王須臾應終。",
        "from": "T50n2043_005:0148a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而今欲遣四十千萬金送與鷄寺。",
        "from": "T50n2043_005:0148a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切國王以物為力。",
        "from": "T50n2043_005:0148a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太子應當勒守物人勿令金出。",
        "from": "T50n2043_005:0148a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是太子即便勒之。",
        "from": "T50n2043_005:0148a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿育王勅不復施行。",
        "from": "T50n2043_005:0148a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有金器供王食用。",
        "from": "T50n2043_005:0148a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王食訖已便令送此金器與彼鷄寺。",
        "from": "T50n2043_005:0148a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復斷金器聽以銀器。",
        "from": "T50n2043_005:0148a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王食竟已復令送此銀器與彼鷄寺。",
        "from": "T50n2043_005:0148a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復斷銀器乃至以鐵器供王王食已復令送與鷄寺。",
        "from": "T50n2043_005:0148a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復斷鐵器聽用瓦器。",
        "from": "T50n2043_005:0148a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿育王無復有物。",
        "from": "T50n2043_005:0148a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯半菴羅菓在其手。",
        "from": "T50n2043_005:0148a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中時阿育王心大悲惱。",
        "from": "T50n2043_005:0148a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召諸大臣及以人民一切和合而語之言。",
        "from": "T50n2043_005:0148a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰於今日為此地主。",
        "from": "T50n2043_005:0148a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大臣起而作禮合掌說言。",
        "from": "T50n2043_005:0148a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯天為主。",
        "from": "T50n2043_005:0148a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無異人。",
        "from": "T50n2043_005:0148a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿育王淚落如雨。",
        "from": "T50n2043_005:0148a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "T50n2043_005:0148a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今我阿育王　　無復自在力",
        "from": "T50n2043_005:0148a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯半阿摩勒　　於我得自在",
        "from": "T50n2043_005:0148a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何用是富貴　　如恒河流水",
        "from": "T50n2043_005:0148b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先所領國土　　豪富最第一",
        "from": "T50n2043_005:0148b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今忽貧窮至　　不復得自在",
        "from": "T50n2043_005:0148b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸合會　　皆悉當分離",
        "from": "T50n2043_005:0148b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來正法言　　無有能知者",
        "from": "T50n2043_005:0148b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我先所勅令　　一切無障罣",
        "from": "T50n2043_005:0148b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如心意識　　於緣得自在",
        "from": "T50n2043_005:0148b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今所教勅　　如水礙於石",
        "from": "T50n2043_005:0148b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸怨賊　　我先悉降伏",
        "from": "T50n2043_005:0148b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王領一切地　　攝一切貧苦",
        "from": "T50n2043_005:0148b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今者無光明　　如雲障於月",
        "from": "T50n2043_005:0148b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如阿輸迦樹　　花葉悉枯落",
        "from": "T50n2043_005:0148b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是我阿輸迦　　貧悴亦如是",
        "from": "T50n2043_005:0148b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時阿育王即呼傍臣。",
        "from": "T50n2043_005:0148b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰跋陀羅目阿翻賢面而語之言。",
        "from": "T50n2043_005:0148b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我失自在。",
        "from": "T50n2043_005:0148b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今於我為最後使。",
        "from": "T50n2043_005:0148b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯此一事汝應當作。",
        "from": "T50n2043_005:0148b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此半阿摩勒菓送與鷄寺宣我語曰。",
        "from": "T50n2043_005:0148b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿育王禮眾僧足。",
        "from": "T50n2043_005:0148b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔領一切閻浮提地今者唯有半阿摩勒菓。",
        "from": "T50n2043_005:0148b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是我最後所行布施。",
        "from": "T50n2043_005:0148b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願僧受之。",
        "from": "T50n2043_005:0148b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此物雖小。",
        "from": "T50n2043_005:0148b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以施眾僧福德廣大。",
        "from": "T50n2043_005:0148b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "T50n2043_005:0148b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我本為人王　　於宮得自在",
        "from": "T50n2043_005:0148b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常為自相　　不久而磨滅",
        "from": "T50n2043_005:0148b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為療治者　　唯有聖福田",
        "from": "T50n2043_005:0148b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今我無醫藥　　願今見濟度",
        "from": "T50n2043_005:0148b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此半阿摩勒　　是我最後施",
        "from": "T50n2043_005:0148b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小施而福廣　　是故應攝受",
        "from": "T50n2043_005:0148b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時此使人。",
        "from": "T50n2043_005:0148b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受王勅已。",
        "from": "T50n2043_005:0148b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將半阿摩勒菓往至鷄寺。",
        "from": "T50n2043_005:0148b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於上座前以阿摩勒菓供養眾僧。",
        "from": "T50n2043_005:0148b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌說偈。",
        "from": "T50n2043_005:0148b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切地一繖　　王領無障礙",
        "from": "T50n2043_005:0148c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如日光明　　遍照一切處",
        "from": "T50n2043_005:0148c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自欺誑業　　功德於今盡",
        "from": "T50n2043_005:0148c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如日入時　　無復有光明",
        "from": "T50n2043_005:0148c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以恭敬頂禮　　施半阿摩勒",
        "from": "T50n2043_005:0148c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯其福德盡　　今為最後施",
        "from": "T50n2043_005:0148c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時上座集諸比丘而語之言。",
        "from": "T50n2043_005:0148c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等今當起怖畏心。",
        "from": "T50n2043_005:0148c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說。",
        "from": "T50n2043_005:0148c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見他無常是處可畏。",
        "from": "T50n2043_005:0148c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰能於此不生厭離何以故。",
        "from": "T50n2043_005:0148c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛能布施　　孔雀阿育王",
        "from": "T50n2043_005:0148c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王領於大地　　閻浮提自在",
        "from": "T50n2043_005:0148c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日果報盡　　唯有阿摩勒",
        "from": "T50n2043_005:0148c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地諸珍寶　　悉為他所護",
        "from": "T50n2043_005:0148c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此阿育王　　捨半阿摩勒",
        "from": "T50n2043_005:0148c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有凡夫人　　福德力生慢",
        "from": "T50n2043_005:0148c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為說無常　　令其生厭離",
        "from": "T50n2043_005:0148c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸眾僧得阿育王半阿摩羅菓。",
        "from": "T50n2043_005:0148c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "碎以為末以置羹中遍行眾僧。",
        "from": "T50n2043_005:0148c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿育王語成護言。",
        "from": "T50n2043_005:0148c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰今為王。",
        "from": "T50n2043_005:0148c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成護禮足合掌說言天為地主。",
        "from": "T50n2043_005:0148c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無有人。",
        "from": "T50n2043_005:0148c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿育王以人扶起遍觀四方。",
        "from": "T50n2043_005:0148c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向眾僧處合掌而言。",
        "from": "T50n2043_005:0148c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今留珍寶此外大地乃至大海一切施僧。",
        "from": "T50n2043_005:0148c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又說偈言。",
        "from": "T50n2043_005:0148c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水為大地衣　　七寶嚴地面",
        "from": "T50n2043_005:0148c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持一切眾生　　及以諸山等",
        "from": "T50n2043_005:0148c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今以捨此　　布施諸眾僧",
        "from": "T50n2043_005:0148c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於眾僧得果　　是故我今施",
        "from": "T50n2043_005:0148c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此布施福　　不求帝釋處",
        "from": "T50n2043_005:0148c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不樂梵天　　及諸大地主",
        "from": "T50n2043_005:0148c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯欲以此福　　願求心自在",
        "from": "T50n2043_005:0148c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得共聖人法　　人所不能奪",
        "from": "T50n2043_005:0149a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至阿育王。",
        "from": "T50n2043_005:0149a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以多羅葉。",
        "from": "T50n2043_005:0149a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此偈語。",
        "from": "T50n2043_005:0149a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以齒印之。",
        "from": "T50n2043_005:0149a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執書合掌向彼僧處而作是言。",
        "from": "T50n2043_005:0149a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此大地一切施僧。",
        "from": "T50n2043_005:0149a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說己便終。",
        "from": "T50n2043_005:0149a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至大臣用五色綵以莊嚴輿供養王身。",
        "from": "T50n2043_005:0149a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養已便水欲以灌太子頂以授王位。",
        "from": "T50n2043_005:0149a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成護語諸臣言。",
        "from": "T50n2043_005:0149a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大地阿育大王已施眾僧。",
        "from": "T50n2043_005:0149a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸臣答言。",
        "from": "T50n2043_005:0149a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等今者當作云何。",
        "from": "T50n2043_005:0149a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成護答言。",
        "from": "T50n2043_005:0149a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先阿育王作意。",
        "from": "T50n2043_005:0149a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我用百千萬金施佛法僧。",
        "from": "T50n2043_005:0149a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已與九十六千萬金。",
        "from": "T50n2043_005:0149a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲更滿之。",
        "from": "T50n2043_005:0149a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而諸臣不聽。",
        "from": "T50n2043_005:0149a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王意不滿。",
        "from": "T50n2043_005:0149a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以一切大地布施眾僧。",
        "from": "T50n2043_005:0149a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸臣即便取四十千萬金以贖大地。",
        "from": "T50n2043_005:0149a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以海水灌太子三波地頂。",
        "from": "T50n2043_005:0149a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令登王位。",
        "from": "T50n2043_005:0149a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三波地兒名毘梨訶鉢底翻太白星。",
        "from": "T50n2043_005:0149a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太白有兒名毘梨沙斯那翻牛畢。",
        "from": "T50n2043_005:0149a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛畢有兒名弗沙跋摩翻尾鎧星。",
        "from": "T50n2043_005:0149a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尾鎧有兒名弗沙蜜多羅翻差友。",
        "from": "T50n2043_005:0149a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至弗沙蜜多羅得登王位。",
        "from": "T50n2043_005:0149a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集諸大臣。",
        "from": "T50n2043_005:0149a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以何方便能令我名恒住不失。",
        "from": "T50n2043_005:0149a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸臣答言。",
        "from": "T50n2043_005:0149a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王之姓從阿育王來。",
        "from": "T50n2043_005:0149a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是阿育王起八萬四千塔乃至佛法未滅。",
        "from": "T50n2043_005:0149a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿育大王名聞亦在。",
        "from": "T50n2043_005:0149a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王今應當起八萬四千塔。",
        "from": "T50n2043_005:0149a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時王答言。",
        "from": "T50n2043_005:0149a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿育大王有大神力人無及者。",
        "from": "T50n2043_005:0149a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更有方便得流名不。",
        "from": "T50n2043_005:0149a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時有婆羅門呪願第一。",
        "from": "T50n2043_005:0149a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而是凡夫不信佛法。",
        "from": "T50n2043_005:0149a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白王言。",
        "from": "T50n2043_005:0149a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二種因名得常住。",
        "from": "T50n2043_005:0149a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者作惡。",
        "from": "T50n2043_005:0149a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者作善。",
        "from": "T50n2043_005:0149a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿育大王起八萬四千塔。",
        "from": "T50n2043_005:0149a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天今壞之名則常在。",
        "from": "T50n2043_005:0149a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至弗沙蜜多羅王。",
        "from": "T50n2043_005:0149a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴駕四兵欲壞佛法。",
        "from": "T50n2043_005:0149a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往至鷄寺。",
        "from": "T50n2043_005:0149a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至已於寺門聞有師子吼。",
        "from": "T50n2043_005:0149a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王大怖畏。",
        "from": "T50n2043_005:0149a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復還波吒利弗國。",
        "from": "T50n2043_005:0149a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三反往至鷄寺亦復如是。",
        "from": "T50n2043_005:0149a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還於本國集彼眾僧而作是言。",
        "from": "T50n2043_005:0149a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於今者欲壞佛法。",
        "from": "T50n2043_005:0149a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸眾僧中。",
        "from": "T50n2043_005:0149a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於塔及寺各有所護。",
        "from": "T50n2043_005:0149a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜各說之。",
        "from": "T50n2043_005:0149a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸僧皆言。",
        "from": "T50n2043_005:0149b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等護塔。",
        "from": "T50n2043_005:0149b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王於是時即殺上座次及諸僧。",
        "from": "T50n2043_005:0149b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有沙柯羅國是其所領。",
        "from": "T50n2043_005:0149b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語彼國人。",
        "from": "T50n2043_005:0149b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有能得一比丘首。",
        "from": "T50n2043_005:0149b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與其金錢。",
        "from": "T50n2043_005:0149b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼國有寺。",
        "from": "T50n2043_005:0149b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰法王。",
        "from": "T50n2043_005:0149b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼寺中有一羅漢。",
        "from": "T50n2043_005:0149b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人欲取頭而白王言。",
        "from": "T50n2043_005:0149b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有比丘。",
        "from": "T50n2043_005:0149b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今欲取頭送與大王。",
        "from": "T50n2043_005:0149b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時王聞已自欲取之。",
        "from": "T50n2043_005:0149b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時比丘入滅盡定。",
        "from": "T50n2043_005:0149b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以定力故。",
        "from": "T50n2043_005:0149b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀杖火毒不能侵害。",
        "from": "T50n2043_005:0149b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既不得殺。",
        "from": "T50n2043_005:0149b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復往餘處至拘瑟他歌翻庫藏國。",
        "from": "T50n2043_005:0149b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼國有一夜叉神守護佛牙。",
        "from": "T50n2043_005:0149b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夜叉思惟佛法當滅。",
        "from": "T50n2043_005:0149b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我既受戒。",
        "from": "T50n2043_005:0149b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復殺生。",
        "from": "T50n2043_005:0149b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有女兒已利履亡失反夜叉本欲求之。",
        "from": "T50n2043_005:0149b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其先常作惡業故而我不許。",
        "from": "T50n2043_005:0149b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為護佛法今應與之。",
        "from": "T50n2043_005:0149b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有一大力夜叉常護弗沙蜜多羅王。",
        "from": "T50n2043_005:0149b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其力故人無侵害。",
        "from": "T50n2043_005:0149b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是護佛牙神將護王夜叉至於南海。",
        "from": "T50n2043_005:0149b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時已利履夜叉取太山。",
        "from": "T50n2043_005:0149b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壓弗沙蜜多羅王及其四兵。",
        "from": "T50n2043_005:0149b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時皆死。",
        "from": "T50n2043_005:0149b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故此山名修尼喜多。",
