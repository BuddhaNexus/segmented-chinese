[
    {
        "source_sentence": "佛說最上祕密那拏天經卷中",
        "from": "T21n1288_002:0361b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T21n1288_002:0361b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1288_002:0361b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "2 成就儀軌分成就儀軌分第二爾時那拏天復說大明曰。",
        "from": "T21n1288_002:0361b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨引囉怛那二合怛囉二合夜引野一那謨吠設囉二合嚩拏寫二摩賀引囉引惹寫三那謨那拏酤鉢囉寫四虞呬也二合哥地鉢帝五那拏酤鉢囉摩引嚩㗚多二合拽沙也二合引蜜六嚕半阿耨鉢末嚕半蘇嚕半七那拏酤鉢囕酤鉢囉八贊捺嚕二合剛那㗚多二合剛九呬末剛㪍囉二合引末剛十那拏那拏十一那拏酤鉢囕十二嚩囉嚩囉酤鉢囉十三摩賀引虞呬也二合剛十四嚩󱃟嚩二合朗嚩󱃟嚩二合朗十五布盧布盧十六母布盧母布盧十七酤鉢囉那拏酤鉢囉娑嚩二合引賀引十八是時那拏天說大明已。",
        "from": "T21n1288_002:0361b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白佛言。",
        "from": "T21n1288_002:0361b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我此大明是最上大無畏。",
        "from": "T21n1288_002:0361b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能調伏諸夜叉所作成就法。",
        "from": "T21n1288_002:0361b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定悉皆成一念此大明圓滿最上事。",
        "from": "T21n1288_002:0361b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人誦此大明得精熟已。",
        "from": "T21n1288_002:0361b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後乃作種種之事。",
        "from": "T21n1288_002:0361c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲離散設咄嚕者。",
        "from": "T21n1288_002:0361c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用佉禰囉木作橛長八指。",
        "from": "T21n1288_002:0361c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此大明加持一遍已。",
        "from": "T21n1288_002:0361c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於設咄嚕挼囉釘之。",
        "from": "T21n1288_002:0361c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即速離散若欲解除者當出彼橛即得除解。",
        "from": "T21n1288_002:0361c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲令設咄嚕嗢訥摩多者。",
        "from": "T21n1288_002:0361c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用白芥子誦大明加持一遍已。",
        "from": "T21n1288_002:0361c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲彼屹哩訶中。",
        "from": "T21n1288_002:0361c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼即得嗢訥摩多。",
        "from": "T21n1288_002:0361c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲除解者當用安悉香。",
        "from": "T21n1288_002:0361c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明一遍加持已。",
        "from": "T21n1288_002:0361c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼屹哩訶中燒即得除解。",
        "from": "T21n1288_002:0361c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲復作離散者。",
        "from": "T21n1288_002:0361c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用摩努沙阿悉帝作橛長八指。",
        "from": "T21n1288_002:0361c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明加持一遍。",
        "from": "T21n1288_002:0361c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安悉香熏。",
        "from": "T21n1288_002:0361c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以此橛釘彼挼囉。",
        "from": "T21n1288_002:0361c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三夜中彼即離散。",
        "from": "T21n1288_002:0361c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲破壞設咄嚕者。",
        "from": "T21n1288_002:0361c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用阿欲末野沒捺誐囉。",
        "from": "T21n1288_002:0361c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同彼名字誦大明加持一遍已。",
        "from": "T21n1288_002:0361c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釘於地中彼即破壞。",
        "from": "T21n1288_002:0361c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲解除當出沒捺誐囉。",
        "from": "T21n1288_002:0361c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得除解。",
        "from": "T21n1288_002:0361c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或釘濕摩舍那中。",
        "from": "T21n1288_002:0361c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼設咄嚕即部多執持。",
        "from": "T21n1288_002:0361c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出沒捺誐囉即得除解。",
        "from": "T21n1288_002:0361c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或釘舜儞也誐囉中。",
        "from": "T21n1288_002:0361c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼得毘舍左屹囉賀執持。",
        "from": "T21n1288_002:0361c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出即除解。",
        "from": "T21n1288_002:0361c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或釘屹囉摩挼囉前。",
        "from": "T21n1288_002:0361c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼印捺哩野即得禁縛。",
        "from": "T21n1288_002:0361c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出即除解。",
        "from": "T21n1288_002:0361c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或釘野中彼即離於本處。",
        "from": "T21n1288_002:0361c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奔入山野猶如麞鹿。",
        "from": "T21n1288_002:0361c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出即除解。",
        "from": "T21n1288_002:0361c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等法誦大明加持一遍。",
        "from": "T21n1288_002:0361c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安悉香皆速成就。",
        "from": "T21n1288_002:0361c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲辟除夜叉羅剎者。",
        "from": "T21n1288_002:0361c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當作四方曼拏羅燒安悉香。",
        "from": "T21n1288_002:0361c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以沒捺誐囉打曼拏羅。",
        "from": "T21n1288_002:0361c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼夜叉羅剎并諸眷屬皆悉遠去。",
        "from": "T21n1288_002:0361c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲驅使夜叉羅剎者。",
        "from": "T21n1288_002:0361c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當塑畫彼形像。",
        "from": "T21n1288_002:0361c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後誦大明。",
        "from": "T21n1288_002:0361c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持沒捺誐囉一遍已。",
        "from": "T21n1288_002:0361c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用打形像。",
        "from": "T21n1288_002:0361c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼夜叉羅剎即現本身。",
        "from": "T21n1288_002:0361c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨行人意作種種事。",
        "from": "T21n1288_002:0361c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有伏藏皆悉引示。",
        "from": "T21n1288_002:0361c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至財穀悉皆供給。",
        "from": "T21n1288_002:0361c28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切侍奉猶如僮僕。",
        "from": "T21n1288_002:0361c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲求毘沙門供給者。",
        "from": "T21n1288_002:0362a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當塑畫彼像。",
        "from": "T21n1288_002:0362a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安悉香熏誦大明。",
        "from": "T21n1288_002:0362a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以沒捺誐囉打之。",
        "from": "T21n1288_002:0362a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼毘沙門即現本身。",
        "from": "T21n1288_002:0362a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當施行人一切所願。",
        "from": "T21n1288_002:0362a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "財穀等事悉皆供給。",
        "from": "T21n1288_002:0362a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲求毘沙門成就法者。",
        "from": "T21n1288_002:0362a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當往有毘沙門像處。",
        "from": "T21n1288_002:0362a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安悉香。",
        "from": "T21n1288_002:0362a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手按毘沙門足。",
        "from": "T21n1288_002:0362a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明七遍彼像即起。",
        "from": "T21n1288_002:0362a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不速起頭破七分。",
        "from": "T21n1288_002:0362a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又加持白芥子打擲像面。",
        "from": "T21n1288_002:0362a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼像即語行人。",
        "from": "T21n1288_002:0362a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所問隨意皆說。",
        "from": "T21n1288_002:0362a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至引示有伏藏處。",
        "from": "T21n1288_002:0362a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復用白芥子及灰相和。",
        "from": "T21n1288_002:0362a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明加持七遍。",
        "from": "T21n1288_002:0362a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安毘沙門像頂燒安悉香。",
        "from": "T21n1288_002:0362a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦大明一遍。",
        "from": "T21n1288_002:0362a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼毘沙門天與百眷屬。",
        "from": "T21n1288_002:0362a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持諸財寶現行人前。",
        "from": "T21n1288_002:0362a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所欲之事皆得成就。",
        "from": "T21n1288_002:0362a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲求那羅延天成就法者。",
        "from": "T21n1288_002:0362a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當就有那羅延天像處。",
        "from": "T21n1288_002:0362a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人燒安悉香。",
        "from": "T21n1288_002:0362a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手按像足誦念大明像即行動。",
        "from": "T21n1288_002:0362a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦大明加持白芥子打擲彼像。",
        "from": "T21n1288_002:0362a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時像即語當施行人。",
        "from": "T21n1288_002:0362a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所願皆得成就。",
        "from": "T21n1288_002:0362a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及能成就一切儀軌。",
        "from": "T21n1288_002:0362a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲求大自在天法成就者。",
        "from": "T21n1288_002:0362a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當擇一葛波羅具法者。",
        "from": "T21n1288_002:0362a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用白芥子誦大明加持七遍已。",
        "from": "T21n1288_002:0362a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛於葛波羅內安大自在天像頂。",
        "from": "T21n1288_002:0362a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時彼天當與行人一切成就。",
        "from": "T21n1288_002:0362a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於像前燒安悉香。",
        "from": "T21n1288_002:0362a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此大明天像即語。",
        "from": "T21n1288_002:0362a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告行人言汝所欲事我皆為作。",
        "from": "T21n1288_002:0362a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至所須一切供給。",
        "from": "T21n1288_002:0362a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲求梵天成就者。",
        "from": "T21n1288_002:0362a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人往有梵天像處。",
        "from": "T21n1288_002:0362a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用牛乳浴天像身。",
        "from": "T21n1288_002:0362a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安悉香誦此大明。",
        "from": "T21n1288_002:0362a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼梵天現於本相。",
        "from": "T21n1288_002:0362a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立行人前謂行人言。",
        "from": "T21n1288_002:0362a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨汝所求。",
        "from": "T21n1288_002:0362a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切儀軌成就之法皆悉與汝。",
        "from": "T21n1288_002:0362a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有浴天像乳行人自食。",
        "from": "T21n1288_002:0362a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此之後未聞之法皆悉得聞。",
        "from": "T21n1288_002:0362b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞深廣譬如大海。",
        "from": "T21n1288_002:0362b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具微妙音如緊那羅。",
        "from": "T21n1288_002:0362b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業清淨增壽千歲。",
        "from": "T21n1288_002:0362b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切成就儀軌皆得成就。",
        "from": "T21n1288_002:0362b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若行人欲降龍者。",
        "from": "T21n1288_002:0362b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當塑作龍身安曼拏羅中。",
        "from": "T21n1288_002:0362b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香花供養。",
        "from": "T21n1288_002:0362b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用葛囉尾囉枝誦大明加持一遍打彼龍身。",
        "from": "T21n1288_002:0362b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦大明加持彼龍。",
        "from": "T21n1288_002:0362b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即現本身降大甘雨。",
        "from": "T21n1288_002:0362b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至承受一切事。",
        "from": "T21n1288_002:0362b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲止雷雹者。",
        "from": "T21n1288_002:0362b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當塑作龍身。",
        "from": "T21n1288_002:0362b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用石榴枝誦大明。",
        "from": "T21n1288_002:0362b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持一遍已。",
        "from": "T21n1288_002:0362b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "打彼龍身雷雹即止。",
        "from": "T21n1288_002:0362b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲止風者。",
        "from": "T21n1288_002:0362b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用掃󰆠誦大明加持已。",
        "from": "T21n1288_002:0362b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樓閣上其風即止。",
        "from": "T21n1288_002:0362b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若破設咄嚕者。",
        "from": "T21n1288_002:0362b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用葛囉尾囉枝燒安悉香熏。",
        "from": "T21n1288_002:0362b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明加持一遍打葛波羅。",
        "from": "T21n1288_002:0362b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼設咄嚕即破。",
        "from": "T21n1288_002:0362b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此法破一切部多夜叉羅剎等亦得隨意。",
        "from": "T21n1288_002:0362b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是大明所作成就法。",
        "from": "T21n1288_002:0362b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆須燒安悉香加持悉得成就。",
        "from": "T21n1288_002:0362b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "3 最上成就儀軌分最上成就儀軌分第三爾時那拏天復說大明曰。",
        "from": "T21n1288_002:0362b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨吠設囉二合嚩拏蘇跢野一那拏酤鉢囉引野二儞尾也二合尾摩引那拶哩跢野三呬末摩引攞毘拏羅設利囉引野四藥叉囉引叉娑曼儞跢野五怛網二合婆誐鑁阿引嚩㗚多二合拽沙也二合蜜六怛𭔞切身他引末尼末尼七骨吒骨吒八骨吒骨吒九骨骨骨骨十鉢囉鉢囉十一布囉布囉十二酤鉢囉酤鉢囉十三那拏酤鉢囉十四儞尾也二合尾摩引那昆拏梨十五咄致咄致娑嚩二合引賀引十六是時那拏天說此大明已。",
        "from": "T21n1288_002:0362b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說成就法若有行人欲求諸夜叉成就者。",
        "from": "T21n1288_002:0362c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用尼拘陀樹木作板。",
        "from": "T21n1288_002:0362c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用上好彩色。",
        "from": "T21n1288_002:0362c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於板上畫彼所求夜叉像。",
        "from": "T21n1288_002:0362c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如菉豆色面大惡相。",
        "from": "T21n1288_002:0362c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利牙出口眾寶嚴身。",
        "from": "T21n1288_002:0362c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持葛波羅。",
        "from": "T21n1288_002:0362c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手作施願。",
        "from": "T21n1288_002:0362c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是畫像已。",
        "from": "T21n1288_002:0362c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後行人當自潔淨唯食白食。",
        "from": "T21n1288_002:0362c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此像前誦大明八千遍。",
        "from": "T21n1288_002:0362c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得數滿已。",
        "from": "T21n1288_002:0362c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜叉現身立行人前。",
        "from": "T21n1288_002:0362c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人即獻白食及閼伽等。",
        "from": "T21n1288_002:0362c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜叉即言所求何事。",
        "from": "T21n1288_002:0362c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人報言我求某事。",
        "from": "T21n1288_002:0362c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜叉即言令汝隨意。",
        "from": "T21n1288_002:0362c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至騰空自在隨意行住。",
        "from": "T21n1288_002:0362c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽五百歲。",
        "from": "T21n1288_002:0362c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若行人欲求羅剎成就者。",
        "from": "T21n1288_002:0362c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當擇取濕摩舍那地。",
        "from": "T21n1288_002:0362c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後行人沐浴潔淨依法著衣。",
        "from": "T21n1288_002:0362c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於所擇地置出生食及閼伽鉢等。",
        "from": "T21n1288_002:0362c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以嚕地囉作護摩十二晝夜。",
        "from": "T21n1288_002:0362c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿是日已。",
        "from": "T21n1288_002:0362c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼羅剎出現本身。",
        "from": "T21n1288_002:0362c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具大惡相而有四臂。",
        "from": "T21n1288_002:0362c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執三叉鉞斧搗杵鈴等。",
        "from": "T21n1288_002:0362c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘於師子住行人前。",
        "from": "T21n1288_002:0362c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告行人言我今欲食。",
        "from": "T21n1288_002:0362c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人若見勿得怖畏。",
        "from": "T21n1288_002:0362c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即手持食告羅剎言。",
        "from": "T21n1288_002:0362c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此食依那拏天旨。",
        "from": "T21n1288_002:0362c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如法食。",
        "from": "T21n1288_002:0362c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是言已即獻食及閼伽。",
        "from": "T21n1288_002:0362c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅剎受已告行人言。",
        "from": "T21n1288_002:0362c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝何所求。",
        "from": "T21n1288_002:0362c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人答言為我作一切事。",
        "from": "T21n1288_002:0362c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅剎即言如是如是。",
        "from": "T21n1288_002:0362c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝所欲事我皆為作。",
        "from": "T21n1288_002:0362c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若行人欲求聖藥成就者。",
        "from": "T21n1288_002:0362c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用雄黃以嚕提囉相和。",
        "from": "T21n1288_002:0362c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛於依法葛波羅內。",
        "from": "T21n1288_002:0362c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明加持八百遍。",
        "from": "T21n1288_002:0362c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨誦明時。",
        "from": "T21n1288_002:0362c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以葛囉尾囉枝攪藥若得葛波羅煖熱熾盛。",
        "from": "T21n1288_002:0362c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖藥即成。",
        "from": "T21n1288_002:0362c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人若用此藥點額。",
        "from": "T21n1288_002:0362c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成持明天騰空自在。",
        "from": "T21n1288_002:0362c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "點於心即得隱身。",
        "from": "T21n1288_002:0362c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意行住無有障礙。",
        "from": "T21n1288_002:0362c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若點於眼一切伏藏皆悉得見。",
        "from": "T21n1288_002:0362c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得入阿修羅窟及入龍宮。",
        "from": "T21n1288_002:0362c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若服此藥延壽百千劫。",
        "from": "T21n1288_002:0362c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變其身相如轉輪王。",
        "from": "T21n1288_002:0362c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具微妙音如緊那羅及如梵音。",
        "from": "T21n1288_002:0362c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若用塗身身即堅固猶如金剛。",
        "from": "T21n1288_002:0363a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法行人欲成就聖藥者。",
        "from": "T21n1288_002:0363a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用羖羊酥及黃牛酥相和。",
        "from": "T21n1288_002:0363a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法然燈。",
        "from": "T21n1288_002:0363a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取其燈煤與搔尾囉藥相和已。",
        "from": "T21n1288_002:0363a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明加持二十一遍即成聖藥。",
        "from": "T21n1288_002:0363a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若用此藥點眼。",
        "from": "T21n1288_002:0363a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人獲大威力覩者愛重。",
        "from": "T21n1288_002:0363a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若求聖藥成就者。",
        "from": "T21n1288_002:0363a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用牛黃誦此大明加持二十一遍。",
        "from": "T21n1288_002:0363a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其藥即成。",
        "from": "T21n1288_002:0363a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人以此聖藥點於額者。",
        "from": "T21n1288_002:0363a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人獲大威力覩者愛重。",
        "from": "T21n1288_002:0363a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若服此藥是人於一切論義得勝。",
        "from": "T21n1288_002:0363a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得成就一切事。",
        "from": "T21n1288_002:0363a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法行人若欲調伏設咄嚕者。",
        "from": "T21n1288_002:0363a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當擇得濕摩舍那地。",
        "from": "T21n1288_002:0363a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於黑月十四日。",
        "from": "T21n1288_002:0363a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐於彼地作句召法。",
        "from": "T21n1288_002:0363a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句召夜叉羅剎部多毘舍左等。",
        "from": "T21n1288_002:0363a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安悉香誦大明二十一遍。",
        "from": "T21n1288_002:0363a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數滿足已。",
        "from": "T21n1288_002:0363a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼即現身立行人前。",
        "from": "T21n1288_002:0363a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人復誦大明。",
        "from": "T21n1288_002:0363a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼夜叉等告行人言。",
        "from": "T21n1288_002:0363a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝召我何作。",
        "from": "T21n1288_002:0363a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人報言汝等執某設咄嚕。",
        "from": "T21n1288_002:0363a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼夜叉等即速往彼執設咄嚕。",
        "from": "T21n1288_002:0363a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若此執者無有能解。",
        "from": "T21n1288_002:0363a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行人為解亦自得病。",
        "from": "T21n1288_002:0363a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若行人欲除設咄嚕者。",
        "from": "T21n1288_002:0363a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當燒濕摩舍那灰。",
        "from": "T21n1288_002:0363a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熏那拏天足。",
        "from": "T21n1288_002:0363a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此灰作彼設咄嚕像。",
        "from": "T21n1288_002:0363a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以那囉阿悉帝橛。",
        "from": "T21n1288_002:0363a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釘設咄嚕紇哩捺野。",
        "from": "T21n1288_002:0363a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以左足踏彼形像。",
        "from": "T21n1288_002:0363a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作忿怒心誦此大明。",
        "from": "T21n1288_002:0363a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有設咄嚕伺其便者速得辟除。",
        "from": "T21n1288_002:0363a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若行人欲降雷雹者。",
        "from": "T21n1288_002:0363a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用赤色葛囉尾囉木。",
        "from": "T21n1288_002:0363a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法作橛。",
        "from": "T21n1288_002:0363a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦明加持已釘於樹下。",
        "from": "T21n1288_002:0363a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼所釘處當降雷雹。",
        "from": "T21n1288_002:0363a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲止者出橛即止。",
        "from": "T21n1288_002:0363a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸法皆用安悉香加持焚燒。",
        "from": "T21n1288_002:0363a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一切法皆得成就。",
        "from": "T21n1288_002:0363a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "4 最上曼拏羅儀軌成就法分最上曼拏羅儀軌成就法分第四爾時那拏天復說最上大曼拏羅法。",
        "from": "T21n1288_002:0363a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此曼拏羅能成一切天。",
        "from": "T21n1288_002:0363b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至梵王那羅延天大自在天常來歸依。",
        "from": "T21n1288_002:0363b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至諸仙亦常稱讚。",
        "from": "T21n1288_002:0363b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩皆為攝受。",
        "from": "T21n1288_002:0363b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有夜叉羅剎等皆得三昧。",
        "from": "T21n1288_002:0363b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有明言及一切儀軌皆悉得成。",
        "from": "T21n1288_002:0363b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人欲作此曼拏羅者。",
        "from": "T21n1288_002:0363b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當依法選擇吉祥成就之地。",
        "from": "T21n1288_002:0363b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後於白月分吉曜直日。",
        "from": "T21n1288_002:0363b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然可起首。",
        "from": "T21n1288_002:0363b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人先自沐浴潔淨著新白衣。",
        "from": "T21n1288_002:0363b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食白飲食已。",
        "from": "T21n1288_002:0363b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後用不墮地瞿摩夷作三重曼拏羅。",
        "from": "T21n1288_002:0363b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外第一重縱廣三十二肘。",
        "from": "T21n1288_002:0363b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足分量四方四門。",
        "from": "T21n1288_002:0363b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其曼拏羅周遍圓滿。",
        "from": "T21n1288_002:0363b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內第二重以白檀香。",
        "from": "T21n1288_002:0363b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作縱廣八肘。",
        "from": "T21n1288_002:0363b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內第三重用龍腦及恭俱摩香作縱廣四肘。",
        "from": "T21n1288_002:0363b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此內第三重曼拏羅中心。",
        "from": "T21n1288_002:0363b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫釋迦佛。",
        "from": "T21n1288_002:0363b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執金剛杵及輪等。",
        "from": "T21n1288_002:0363b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛前畫那拏天。",
        "from": "T21n1288_002:0363b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具端嚴相有十六臂。",
        "from": "T21n1288_002:0363b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持諸器仗眾寶莊嚴。",
        "from": "T21n1288_002:0363b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內第二重依法畫諸大天。",
        "from": "T21n1288_002:0363b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大梵王那羅延天大自在天等。",
        "from": "T21n1288_002:0363b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四隅畫四大天王。",
        "from": "T21n1288_002:0363b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外第一重畫大夜叉主。",
        "from": "T21n1288_002:0363b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四門畫滿賢天寶賢天力天難儞計說囉天。",
        "from": "T21n1288_002:0363b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是畫像已。",
        "from": "T21n1288_002:0363b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後先於佛前安四金鉢。",
        "from": "T21n1288_002:0363b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於外曼拏羅南方。",
        "from": "T21n1288_002:0363b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法安二十五閼伽瓶二十五香爐八銀鉢。",
        "from": "T21n1288_002:0363b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至西北東方亦復如是。",
        "from": "T21n1288_002:0363b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次安種種花菓出生飲食等。",
        "from": "T21n1288_002:0363b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花菓各八百飣。",
        "from": "T21n1288_002:0363b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燃燈八百盞。",
        "from": "T21n1288_002:0363b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生食八百分。",
        "from": "T21n1288_002:0363b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別出生食三十二分。",
        "from": "T21n1288_002:0363b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復獻六十四味食一百八分。",
        "from": "T21n1288_002:0363b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復安種種幖幟。",
        "from": "T21n1288_002:0363b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又與幖幟相間安八百鉢。",
        "from": "T21n1288_002:0363b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次安劍三十二口幡一百八首。",
        "from": "T21n1288_002:0363b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次安八沒捺誐囉八三叉四輪四螺四設訖底三十二金剛杵四擣杵四鈴四覩摩囉。",
        "from": "T21n1288_002:0363b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及種種香花等。",
        "from": "T21n1288_002:0363b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後於四門四隅。",
        "from": "T21n1288_002:0363b27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各立一人身被甲冑手持器仗。",
        "from": "T21n1288_002:0363b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於外四面用五綵。",
        "from": "T21n1288_002:0363b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種陳設裝嚴。",
        "from": "T21n1288_002:0363b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復排種種伎樂。",
        "from": "T21n1288_002:0363b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每獻食時動樂供養。",
        "from": "T21n1288_002:0363c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是儀則依法安布已。",
        "from": "T21n1288_002:0363c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後行人依法。",
        "from": "T21n1288_002:0363c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日三時獻食出生。",
        "from": "T21n1288_002:0363c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其食並須加持七遍方獻賢聖。",
        "from": "T21n1288_002:0363c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人然後用安悉香白芥子香油相和。",
        "from": "T21n1288_002:0363c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於曼拏羅前依法作護摩。",
        "from": "T21n1288_002:0363c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼那拏天即現本身。",
        "from": "T21n1288_002:0363c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前曼拏羅中相。",
        "from": "T21n1288_002:0363c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮世尊已告行人言。",
        "from": "T21n1288_002:0363c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今善來汝所願求我今當與。",
        "from": "T21n1288_002:0363c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時行人奉獻閼伽已。",
        "from": "T21n1288_002:0363c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說所願。",
        "from": "T21n1288_002:0363c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼那拏天言隨行人意。",
        "from": "T21n1288_002:0363c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所欲。",
        "from": "T21n1288_002:0363c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為持明天或天帝釋或護世轉輪之位。",
        "from": "T21n1288_002:0363c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至梵王大自在天那羅延天等。",
        "from": "T21n1288_002:0363c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人乃至欲求如那拏天亦得隨意何況求世間長壽多聞珍寶財穀。",
        "from": "T21n1288_002:0363c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生崇重之事。",
        "from": "T21n1288_002:0363c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或制伏邪法辯傍生聲音。",
        "from": "T21n1288_002:0363c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或取伏藏並得隨意。",
        "from": "T21n1288_002:0363c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至降龍入龍宮入阿脩羅宮。",
        "from": "T21n1288_002:0363c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或求聖藥或隱身法。",
        "from": "T21n1288_002:0363c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至天眼宿命之智。",
        "from": "T21n1288_002:0363c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及夜叉羅剎等。",
        "from": "T21n1288_002:0363c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種成就之法皆悉隨意。",
        "from": "T21n1288_002:0363c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或不作曼拏羅者。",
        "from": "T21n1288_002:0363c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人但起上品勇猛堅固之心。",
        "from": "T21n1288_002:0363c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦大明數滿千遍所作皆成。",
        "from": "T21n1288_002:0363c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人如是得願滿已。",
        "from": "T21n1288_002:0363c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即虔至勞謝一切賢聖已。",
        "from": "T21n1288_002:0363c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦大明發送那拏天迴還本處。",
        "from": "T21n1288_002:0363c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明曰。",
        "from": "T21n1288_002:0363c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨引吠設囉二合嚩拏蘇多引野一那拏酤鉢囉引野二唵娑囉娑囉三尾娑囉尾娑囉四那吒引那吒引五㜸蹉㜸蹉莎婆嚩曩六那拏酤鉢囉野他引蘇珂薩怛網三合七藥偁捺囉二合莎賀引八行人用花誦此大明加持一遍。",
        "from": "T21n1288_002:0363c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焚燒安悉香熏花獻。",
        "from": "T21n1288_002:0363c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那拏天即隱身不現。",
        "from": "T21n1288_002:0363c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "5 最上成就畫像儀軌分最上成就畫像儀軌分第五爾時那拏天復說畫像法。",
        "from": "T21n1288_002:0363c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行人欲畫那拏天像者。",
        "from": "T21n1288_002:0363c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用新好素帛具茸頭者。",
        "from": "T21n1288_002:0363c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量方四肘。",
        "from": "T21n1288_002:0363c29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此帛已。",
        "from": "T21n1288_002:0364a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復依法選擇殊勝處所。",
        "from": "T21n1288_002:0364a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令畫人齋戒清淨。",
        "from": "T21n1288_002:0364a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然可作㡧起首。",
        "from": "T21n1288_002:0364a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用新淨器內調和彩色。",
        "from": "T21n1288_002:0364a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於㡧中心畫那拏天作端嚴相。",
        "from": "T21n1288_002:0364a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十六臂各執器仗。",
        "from": "T21n1288_002:0364a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於左右畫大梵天那羅延天大自在天毘沙門天寶賢天滿賢天力天大力天吉祥天大辯天。",
        "from": "T21n1288_002:0364a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次下畫諸天子及諸天仙。",
        "from": "T21n1288_002:0364a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次外畫大夜叉主。",
        "from": "T21n1288_002:0364a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等依法畫已。",
