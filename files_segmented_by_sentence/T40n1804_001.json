[
    {
        "source_sentence": "四分律刪繁補闕行事鈔序四分律刪繁補闕行事鈔序作者非無標名顯別",
        "from": "T40n1804_001:0001a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "京兆崇義寺沙門釋道宣撰述",
        "from": "T40n1804_001:0001a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫戒德難思，冠超眾象；為五乘之軌導，寔三",
        "from": "T40n1804_001:0001a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶之舟航！",
        "from": "T40n1804_001:0001a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依教建修，定慧之功莫等；",
        "from": "T40n1804_001:0001a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住持佛法，群籍於茲息唱。",
        "from": "T40n1804_001:0001a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自大師在世，偏弘斯典；",
        "from": "T40n1804_001:0001a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰及四依，遺風無替。",
        "from": "T40n1804_001:0001a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逮于像季，時轉澆訛；",
        "from": "T40n1804_001:0001a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爭鋒脣舌之間，鼓論不形之事。",
        "from": "T40n1804_001:0001a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以震嶺傳教，九代聞之；",
        "from": "T40n1804_001:0001a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔萃出類，智術而已。",
        "from": "T40n1804_001:0001a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明揚顯行儀，匡攝像教；",
        "from": "T40n1804_001:0001a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂彝範，訓末學；",
        "from": "T40n1804_001:0001a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紐既絕之玄綱，樹已顛之大表者，可得詳而評之。",
        "from": "T40n1804_001:0001a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非憑虛，易以形聲；",
        "from": "T40n1804_001:0001a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軌事難為，露潔者矣！",
        "from": "T40n1804_001:0001a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則，前修託於律藏，指事披文而用之；",
        "from": "T40n1804_001:0001a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則在文信於實錄，而寄緣良有繁濫。",
        "from": "T40n1804_001:0001a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加以學非精博，臆說尤多；",
        "from": "T40n1804_001:0001a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取類寡於討論，生常異計斯集。",
        "from": "T40n1804_001:0001a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致令辨析釁戾，輕重倍分；",
        "from": "T40n1804_001:0001a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾網維持，同異區別。",
        "from": "T40n1804_001:0001a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自非統教意之廢興，考諸說之虛實者，孰能闢重疑，遣通累，括部執，詮行相者與？",
        "from": "T40n1804_001:0001a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常恨前代諸師，所流遺記，止論文疏廢立，問答要抄；",
        "from": "T40n1804_001:0001a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於顯行世事，方軌來蒙者，百無一本。",
        "from": "T40n1804_001:0001a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有銳懷行事，而文在義集；",
        "from": "T40n1804_001:0001a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復多列游辭，而逗機未足；",
        "from": "T40n1804_001:0001a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或單題羯磨，成相莫宣。",
        "from": "T40n1804_001:0001a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依文用之，不辨前事；",
        "from": "T40n1804_001:0001a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並言章碎亂，未可披撿。",
        "from": "T40n1804_001:0001a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以尋求者，非積學不知；",
        "from": "T40n1804_001:0001a25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領會者，非精鍊莫悉。",
        "from": "T40n1804_001:0001a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余因聽采之暇，顧眄群篇；",
        "from": "T40n1804_001:0001a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通非屬意，俱懷優劣；",
        "from": "T40n1804_001:0001a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斐然作命，直筆具舒。",
        "from": "T40n1804_001:0001a27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "包異部誠文，括眾經隨說，及西土賢聖所遺，此方先德文紀；",
        "from": "T40n1804_001:0001a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搜駁同異，並皆窮覈；",
        "from": "T40n1804_001:0001a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長見必錄，以輔博知；",
        "from": "T40n1804_001:0001b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濫述必剪，用成通意。",
        "from": "T40n1804_001:0001b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或繁文以顯事用，或略指以類相從；",
        "from": "T40n1804_001:0001b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或文斷而以義連，或徵辭而假來問。",
        "from": "T40n1804_001:0001b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是始終交映，隱顯互出。",
        "from": "T40n1804_001:0001b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并見行羯磨、諸務是非、導俗正儀、出家雜法，並皆攬為此宗之一見，用濟新學之費功焉！",
        "from": "T40n1804_001:0001b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然同我則擊其大節，異說則斥其文繁，文繁誰所樂之？",
        "from": "T40n1804_001:0001b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良由事不獲已！",
        "from": "T40n1804_001:0001b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者？",
        "from": "T40n1804_001:0001b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若略減取其梗概，用事恒有不足；",
        "from": "T40n1804_001:0001b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必橫評不急之言，於鈔便成所諱。",
        "from": "T40n1804_001:0001b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今圖度取中，務兼省約；",
        "from": "T40n1804_001:0001b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救急備卒，勒成三卷。",
        "from": "T40n1804_001:0001b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若思不贍於時事，固有闕於行詮，則略標旨趣，以廣於後。",
        "from": "T40n1804_001:0001b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然一部之文，義張三位。",
        "from": "T40n1804_001:0001b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上卷則攝於眾務，成用有儀；",
        "from": "T40n1804_001:0001b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中卷則遵於戒體，持犯立懺；",
        "from": "T40n1804_001:0001b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下卷則隨機要行，託事而起。",
        "from": "T40n1804_001:0001b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並如文具委，想無紊亂；",
        "from": "T40n1804_001:0001b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但境事寔繁，良難科擬。",
        "from": "T40n1804_001:0001b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今取物類相從者，以標名首；",
        "from": "T40n1804_001:0001b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於統其大綱，恐條流未委，更以十門例括，方鏡曉遠詮。",
        "from": "T40n1804_001:0001b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標宗顯德篇第一集僧通局篇第二足數眾相篇第三別眾法附受欲是非篇第四通辨羯磨篇第五結界方法篇第六僧網大綱篇第七受戒緣集篇第八捨戒六念法附師資相攝篇第九說戒正儀篇第十安居策修篇第十一受日法附自恣宗要篇第十二迦絺那衣法附篇聚名報篇第十三隨戒釋相篇第十四持犯方軌篇第十五懺六聚法篇第十六二衣總別篇第十七四藥受淨篇第十八鉢器制聽篇第十九房舍五行調度眾具法附對施興治篇第二十頭陀行儀篇第二十一僧像致敬篇第二十二造立像寺法附計請設則篇第二十三導俗化方篇第二十四主客相待篇第二十五四儀法附瞻病送終篇第二十六諸雜要行篇第二十七謂出世正業比丘所依法沙彌別法篇第二十八尼眾別行篇第二十九諸部別行篇第三十第一序教興意。",
        "from": "T40n1804_001:0001c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫至人興世，益物有方；",
        "from": "T40n1804_001:0001c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨機設教，理無虛授。",
        "from": "T40n1804_001:0001c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論云：",
        "from": "T40n1804_001:0001c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依大慈門，說於毘尼。",
        "from": "T40n1804_001:0001c19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故律云：",
        "from": "T40n1804_001:0001c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊慈念故，而為說法。",
        "from": "T40n1804_001:0001c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二為對外道無法自居，顯佛法人尊道高，故制斯戒。",
        "from": "T40n1804_001:0001c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀下律中，凡所制者，並懷異術。",
        "from": "T40n1804_001:0001c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故文云：",
        "from": "T40n1804_001:0001c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不撰結，則令外道以致餘言。",
        "from": "T40n1804_001:0001c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三為對異宗故來。",
        "from": "T40n1804_001:0001c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗則有其多別：",
        "from": "T40n1804_001:0001c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且如薩婆多部，戒本繁略，指體未圓；",
        "from": "T40n1804_001:0001c24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "接俗楷定於時數，御法例通於無準。",
        "from": "T40n1804_001:0001c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今曇無德部，人法有序，軌用多方；",
        "from": "T40n1804_001:0001c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提誘唯存生善，立教意居顯約。",
        "from": "T40n1804_001:0001c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上則通明教興，今據當宗以辨。",
        "from": "T40n1804_001:0001c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫教不孤起，必因人；",
        "from": "T40n1804_001:0001c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人既不同，教亦非一。",
        "from": "T40n1804_001:0001c28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故攝誘弘濟，軌用實多。",
        "from": "T40n1804_001:0001c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貴在得其本詮，誠難覈其條緒。",
        "from": "T40n1804_001:0002a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以約開制，驗旨在為人；",
        "from": "T40n1804_001:0002a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯持犯，諒意存無過。",
        "from": "T40n1804_001:0002a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今束一律藏，以五例分之，則教興之意可見也！",
        "from": "T40n1804_001:0002a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一以遮性往分，性惡則通於化制，遮戒因過便起。",
        "from": "T40n1804_001:0002a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則，性戒文緩而義急，謂隨諸重戒，並有開文；",
        "from": "T40n1804_001:0002a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文雖是開，開實結犯；",
        "from": "T40n1804_001:0002a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱成持也，持之寔難。",
        "from": "T40n1804_001:0002a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如淫則三時無樂，毀訾則始終慈救；",
        "from": "T40n1804_001:0002a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既是根本貪瞋，何能禁心無逸？",
        "from": "T40n1804_001:0002a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知義存急護也！",
        "from": "T40n1804_001:0002a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮戒一往制止，有益便開；",
        "from": "T40n1804_001:0002a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開之過興，還復令制；",
        "from": "T40n1804_001:0002a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非為存化俗，恐墜枉坑？",
        "from": "T40n1804_001:0002a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慈設教，意唯撿失，故《毘尼母論》，具立緩急二儀，令尋之以通望也！",
        "from": "T40n1804_001:0002a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二以開制往徵，教則通於二世。",
        "from": "T40n1804_001:0002a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故下文云：",
        "from": "T40n1804_001:0002a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以世尊是一切智人故，制已更開，開已還制，此通未來教也！",
        "from": "T40n1804_001:0002a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《五分》：",
        "from": "T40n1804_001:0002a13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖我所制，於餘方不為清淨者，則不應用；",
        "from": "T40n1804_001:0002a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖非我所制，於餘方必應行者，不得不行。",
        "from": "T40n1804_001:0002a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此如來在世教也！",
        "from": "T40n1804_001:0002a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然二教相融，互兼彼此。",
        "from": "T40n1804_001:0002a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三以報有強弱，教亦重聽。",
        "from": "T40n1804_001:0002a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就制則深防、限分，約行則山、世不同。",
        "from": "T40n1804_001:0002a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四以機悟為先。",
        "from": "T40n1804_001:0002a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教門輕重致隔，五部異執，豈不然耶？",
        "from": "T40n1804_001:0002a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五以事法相對。",
        "from": "T40n1804_001:0002a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法唯楷式，乖旨則事不成；",
        "from": "T40n1804_001:0002a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事通情性，故隨境制其得失。",
        "from": "T40n1804_001:0002a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或託三性之緣，或隨世譏而起。",
        "from": "T40n1804_001:0002a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且略引諸條，薄知方詣。",
        "from": "T40n1804_001:0002a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總撮包舉者，莫非拯接凡庸，心懷泥曰而興教矣！",
        "from": "T40n1804_001:0002a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故文云：",
        "from": "T40n1804_001:0002a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊何故制增戒學？",
        "from": "T40n1804_001:0002a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為調三毒故！",
        "from": "T40n1804_001:0002a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何為學？",
        "from": "T40n1804_001:0002a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求四果故！",
        "from": "T40n1804_001:0002a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下諸門中所述制意，止隨前事，令後進者尋條知本焉。",
        "from": "T40n1804_001:0002a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二制教輕重意。",
        "from": "T40n1804_001:0002a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輕重兩意，裁斷寔難，何者？",
        "from": "T40n1804_001:0002a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "原彼能施之教，教主窮機之人；",
        "from": "T40n1804_001:0002a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又推此所為之人，人唯應藥之器；",
        "from": "T40n1804_001:0002a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以藥病相扣，利潤無方；",
        "from": "T40n1804_001:0002a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈可以情斷，寧復言論測也！",
        "from": "T40n1804_001:0002a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然重覈其遠標，實被於來裔。",
        "from": "T40n1804_001:0002b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在文自顯，何假證成！",
        "from": "T40n1804_001:0002b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今序斯大略，所謂有七：",
        "from": "T40n1804_001:0002b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一興厭漸頓。",
        "from": "T40n1804_001:0002b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二結正業科。",
        "from": "T40n1804_001:0002b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三報果不同。",
        "from": "T40n1804_001:0002b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四攝趣優劣。",
        "from": "T40n1804_001:0002b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五起情虛實。",
        "from": "T40n1804_001:0002b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六開制互立。",
        "from": "T40n1804_001:0002b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七約行彰異，如誼靜二儀也！",
        "from": "T40n1804_001:0002b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡此諸例，並制教之本懷，據斷之宗體。",
        "from": "T40n1804_001:0002b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三對事約教判處意。",
        "from": "T40n1804_001:0002b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自佛法東流，幾六百載，諸師穿鑿，判割是非；",
        "from": "T40n1804_001:0002b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "競封同異，不可稱說。",
        "from": "T40n1804_001:0002b07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良由尋討者不識宗旨，行事者昏於本趣。",
        "from": "T40n1804_001:0002b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故須學師必約經遠，執教必佩真文。",
        "from": "T40n1804_001:0002b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何事被於毀譏，豈復淪乎蚩責？",
        "from": "T40n1804_001:0002b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今判其持犯，還約其受體；",
        "from": "T40n1804_001:0002b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體既《四分》而受，豈得異部明隨？",
        "from": "T40n1804_001:0002b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶恐不曉大綱，更示其分齊。",
        "from": "T40n1804_001:0002b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂輒將己所學者，判他持犯；",
        "from": "T40n1804_001:0002b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫罹愆失，其唯不學愚癡！",
        "from": "T40n1804_001:0002b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今通立定格，共成較準，一披條領，釋然大觀。",
        "from": "T40n1804_001:0002b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四用諸部文意。",
        "from": "T40n1804_001:0002b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "統明律藏，本實一文，但為機悟不同，致令諸計岳立。",
        "from": "T40n1804_001:0002b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以隨其樂欲，成立己宗，競采大眾之文，用集一家之典。",
        "from": "T40n1804_001:0002b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有輕重異勢，持犯分塗；",
        "from": "T40n1804_001:0002b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有無遞出，廢興互顯。",
        "from": "T40n1804_001:0002b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今立《四分》為本；",
        "from": "T40n1804_001:0002b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行事之時，必須用諸部者，不可不用。",
        "from": "T40n1804_001:0002b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故《善見》云：",
        "from": "T40n1804_001:0002b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘尼有四法，諸大德有神通者，抄出令人知。",
        "from": "T40n1804_001:0002b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一本者，謂一切律藏。",
        "from": "T40n1804_001:0002b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二隨本。",
        "from": "T40n1804_001:0002b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三法師語者，謂佛先說本，五百羅漢廣分別流通，即論主也。",
        "from": "T40n1804_001:0002b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四意用，謂以意方便度用及三藏等廣說也。",
        "from": "T40n1804_001:0002b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先觀根本，次及句義，後觀法師語；",
        "from": "T40n1804_001:0002b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與文句等者用，不等者莫取第六卷中廣明律師法。",
        "from": "T40n1804_001:0002b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正文如此。",
        "from": "T40n1804_001:0002b26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然行藏之務實難，取捨之義非易；",
        "from": "T40n1804_001:0002b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且述其大詮，以程無惑。",
        "from": "T40n1804_001:0002b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂此宗中，文義俱圓，約事無缺者，當部自足，何假外求？",
        "from": "T40n1804_001:0002b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘有律文不了，事在廢前；",
        "from": "T40n1804_001:0002b29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有義無文，無文有事；",
        "from": "T40n1804_001:0002c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯眾例，並取外宗，成此一部。",
        "from": "T40n1804_001:0002c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又所引部類，必取義勢相關者，可用證成；",
        "from": "T40n1804_001:0002c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必緩急重輕，是非條別者，準論不取。",
        "from": "T40n1804_001:0002c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故文列四說，令勘得失。",
        "from": "T40n1804_001:0002c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《十誦》墨印，義亦同之。",
        "from": "T40n1804_001:0002c04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若此以明，則心境相照，動合規猷；",
        "from": "T40n1804_001:0002c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繁略取中，理何晦沒。",
        "from": "T40n1804_001:0002c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不鏡覽諸部，偏執一隅，涉事事則不周，挍文文無可據；",
        "from": "T40n1804_001:0002c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂師心臆見，各競是非，互指為迷，誠由無教。",
        "from": "T40n1804_001:0002c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若《四分》判文有限，則事不可通行，還用他部之文，以成他部之事。",
        "from": "T40n1804_001:0002c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或二律之內，文義雙明，則無由取捨，便俱出正法，隨意采用。",
        "from": "T40n1804_001:0002c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然行用正教，親自披閱，恐傳聞濫真故也！",
        "from": "T40n1804_001:0002c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又世中持律，略有六焉。",
        "from": "T40n1804_001:0002c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一唯執《四分》一部，不用外宗如持衣、說藥之例，文無，止但手持而已。",
        "from": "T40n1804_001:0002c13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二當部缺文，取外引用即用《十誦》持衣、加藥之類。",
        "from": "T40n1804_001:0002c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三當宗有義，文非明了謂狂顛、足數、睡聾之類。",
        "from": "T40n1804_001:0002c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四此部文義具明，而是異宗所廢如捨淨地、直言說戒之類。",
        "from": "T40n1804_001:0002c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五兼取五藏，通會律宗如《長含》中，不冷更試外道。",
        "from": "T40n1804_001:0002c16_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六終窮所歸，大乘至極如《楞伽》、《涅槃》，僧坊無煙、禁斷酒肉五辛、八不淨財之類。",
        "from": "T40n1804_001:0002c17_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等六師，各執正言，無非聖旨；",
        "from": "T40n1804_001:0002c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但由通局兩見，故有用解參差。",
        "from": "T40n1804_001:0002c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此鈔所宗，意存第三、第六；",
        "from": "T40n1804_001:0002c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘亦參取，得失隨機，知時故也！",
        "from": "T40n1804_001:0002c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五文義決通意。",
        "from": "T40n1804_001:0002c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫理本絕名，故立名標其宗極；",
        "from": "T40n1804_001:0002c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名隨事顯，故對事而備斯文。",
        "from": "T40n1804_001:0002c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然考斯律藏，言事並周，但為年代渺邈，聲彩靡追；",
        "from": "T40n1804_001:0002c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法為時移，事多殘缺；",
        "from": "T40n1804_001:0002c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加以五師捃拾，情見不同；",
        "from": "T40n1804_001:0002c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重由翻譯失旨，妄生構立；",
        "from": "T40n1804_001:0002c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又為抄寫錯漏，相承傳濫。",
        "from": "T40n1804_001:0002c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以至於尋究，紛慮良多。",
        "from": "T40n1804_001:0002c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今總會之，以通其大見。",
        "from": "T40n1804_001:0002c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若文義俱闕，則可舉一以例諸；",
        "from": "T40n1804_001:0002c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或就理有，而成前事；",
        "from": "T40n1804_001:0002c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在文雖具，而於義有闕，便以義定之。",
        "from": "T40n1804_001:0002c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故論言以理為正故也！",
        "from": "T40n1804_001:0002c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或義雖必立，當部無文，則統關諸部，以息餘謗。",
        "from": "T40n1804_001:0003a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然文義決通，誠難廢立；",
        "from": "T40n1804_001:0003a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自非深明律相，善達開遮；",
        "from": "T40n1804_001:0003a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不然，便有累於自心，固無益於他境。",
        "from": "T40n1804_001:0003a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故律云：",
        "from": "T40n1804_001:0003a03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文義俱同、文同義異、文異義同、文義俱異，具舒進止，不勞敘釋。",
        "from": "T40n1804_001:0003a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然決判是非者，必總通律藏之旨，并識隨經之文；",
        "from": "T40n1804_001:0003a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上六師所明，乃可究斯教迹。",
        "from": "T40n1804_001:0003a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故《十誦》云：",
        "from": "T40n1804_001:0003a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘有三事決定知毘尼相：",
        "from": "T40n1804_001:0003a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一本起，二結戒，三隨結。",
        "from": "T40n1804_001:0003a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應思惟觀察二部戒律，并及義解、毘尼、增一，開遮輕重。",
        "from": "T40n1804_001:0003a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如五大色，是不淨，遮；",
        "from": "T40n1804_001:0003a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非色，淨，不遮。",
        "from": "T40n1804_001:0003a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等，籌量本末已用也！",
        "from": "T40n1804_001:0003a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《明了論》亦云：",
        "from": "T40n1804_001:0003a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘能知五相，名解毘尼，不看他面。",
        "from": "T40n1804_001:0003a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文略同上，廣如彼說。",
        "from": "T40n1804_001:0003a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六教所詮意。",
        "from": "T40n1804_001:0003a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詮教之文，文雖浩博，撮其大趣，止明持犯。",
        "from": "T40n1804_001:0003a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然持犯之境，境通內外；",
        "from": "T40n1804_001:0003a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內謂行心之結業，外謂情事之順違。",
        "from": "T40n1804_001:0003a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但令教行相循，始終無犯，則為持也。",
        "from": "T40n1804_001:0003a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生來不學，於法無聞，修造善惡，義兼福罰。",
        "from": "T40n1804_001:0003a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今欲科罪，但使與教相應，不問事情虛實，並名犯也。",
        "from": "T40n1804_001:0003a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此通名持犯也！",
        "from": "T40n1804_001:0003a18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若結篇正罪，窮諸治罰，必令束其方便，攬成業果；",
        "from": "T40n1804_001:0003a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使量據覈其實情，輕重得於理教；",
        "from": "T40n1804_001:0003a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則斷割皎然，更何蕪濫。",
        "from": "T40n1804_001:0003a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此別名持犯也！",
        "from": "T40n1804_001:0003a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七道俗七部立教通局意。",
        "from": "T40n1804_001:0003a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯理之教，乃有多途，而可以情求，大分為二。",
        "from": "T40n1804_001:0003a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一謂化教。",
        "from": "T40n1804_001:0003a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則通於道俗。",
        "from": "T40n1804_001:0003a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但汎明因果，識達邪正。",
        "from": "T40n1804_001:0003a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "科其行業，沈密而難知；",
        "from": "T40n1804_001:0003a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯其來報，明了而易述。",
        "from": "T40n1804_001:0003a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二謂行教。",
        "from": "T40n1804_001:0003a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯局於內眾。",
        "from": "T40n1804_001:0003a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定其取捨，立其網致，顯於持犯，決於疑滯；",
        "from": "T40n1804_001:0003a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指事曲宣，文無重覽之義；",
        "from": "T40n1804_001:0003a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結罪明斷，事有再科之愆。",
        "from": "T40n1804_001:0003a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則，二教循環，非無相濫；",
        "from": "T40n1804_001:0003a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉宗以判，理自彰矣。",
        "from": "T40n1804_001:0003a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂內心違順，託理為宗，則準化教；",
        "from": "T40n1804_001:0003b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外用施為，必護身口，便依行教。",
        "from": "T40n1804_001:0003b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然犯化教者，但受業道一報；",
        "from": "T40n1804_001:0003b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "違行教者，重增聖制之罪。",
        "from": "T40n1804_001:0003b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云：",
        "from": "T40n1804_001:0003b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受戒者罪重，不受者罪輕，文廣自明。",
        "from": "T40n1804_001:0003b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以更分者，恐迷二教之宗體，妄述業行之是非；",
        "from": "T40n1804_001:0003b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故立一門，永用蠲別。",
        "from": "T40n1804_001:0003b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八僧尼二部行事通塞意。",
        "from": "T40n1804_001:0003b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然二部同戒同制，則事法相同；",
        "from": "T40n1804_001:0003b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行用儀式，類準僧法；",
        "from": "T40n1804_001:0003b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具在諸門，隨事詳用。",
        "from": "T40n1804_001:0003b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若辨成犯相者，戒本自分。",
        "from": "T40n1804_001:0003b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱而難知者，具在隨相。",
        "from": "T40n1804_001:0003b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘有約位之戒，謂輕重不同，有無互缺，犯同緣異，而是當世盛行，種相難知者；",
        "from": "T40n1804_001:0003b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及別行、眾行等法，方列尼別行法中。",
        "from": "T40n1804_001:0003b11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此但分其宗類，猶未顯其來詮；",
        "from": "T40n1804_001:0003b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有不同之意，具在大疏。",
        "from": "T40n1804_001:0003b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九下三眾隨行異同意。",
        "from": "T40n1804_001:0003b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二眾沙彌，若約戒體，同大僧無作；",
        "from": "T40n1804_001:0003b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撿其本數，唯顯於十；",
        "from": "T40n1804_001:0003b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就餘隨行，類等塵沙；",
        "from": "T40n1804_001:0003b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結罪居第五篇，就位在諸戒末。",
        "from": "T40n1804_001:0003b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自外行法不同，取捨有異者，各就別篇具明。",
        "from": "T40n1804_001:0003b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "式叉摩那，六法是其學宗，戒體更不重發；",
        "from": "T40n1804_001:0003b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘隨行對治，同諸三眾學之。",
        "from": "T40n1804_001:0003b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有不同，具如尼別法所顯。",
        "from": "T40n1804_001:0003b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十明鈔者。",
        "from": "T40n1804_001:0003b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引用正文，去濫傳真，科酌意。",
        "from": "T40n1804_001:0003b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明引用正經，次明世中偽說，後明鈔興本意。",
        "from": "T40n1804_001:0003b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初言正本者：",
        "from": "T40n1804_001:0003b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《僧祇律》是根本部，餘是五部、曇無德部《四分律》也，鈔者所宗、薩婆多部《十誦律》也、彌沙塞部《五分律》也、迦葉遺部《解脫律》，此有戒本、婆麁富羅部律本未至，此依《大集》別；",
        "from": "T40n1804_001:0003b25_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《毘尼母論》、《善見論》、《摩得勒伽論》、《薩婆多論》并傳、《毘奈耶律》、《明了論》釋正量部，并真諦三藏疏；",
        "from": "T40n1804_001:0003b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《五百問法》、《出要律儀》梁武帝準律集……自餘眾部，文廣不列。",
        "from": "T40n1804_001:0003b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并大小乘經，及以二論，與律相應者，名隨經律。",
        "from": "T40n1804_001:0003b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並具入正錄，如費長房開皇三寶錄十五卷中。",
        "from": "T40n1804_001:0003c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明諸師異執。",
        "from": "T40n1804_001:0003c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法聰律師、覆律師出疏六卷，光律師兩度出疏，理、隱、樂三師各出抄，遵統師疏八卷，淵律師有疏，雲、暉、願三師各自出抄疏，洪、勝二師有抄，首律師有疏二十卷，礪律師有疏十卷，基律師有疏已外；",
        "from": "T40n1804_001:0003c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曇瑗、僧祐、靈裕諸師已下；",
        "from": "T40n1804_001:0003c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及江表、關內、河南、蜀部諸餘流傳者，並具披括，一如《義鈔》。",
        "from": "T40n1804_001:0003c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明世中偽經。",
        "from": "T40n1804_001:0003c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《諸佛下生經》六帙、《淨行優婆塞經》十卷、《獨覺論》、《金棺經》、《救疾經》、《罪福決疑經》、《毘尼決正論》、《優波離論》、《普決論》、《阿難請戒律論》、《迦葉問論》、《大威儀請問論》、《五辛經》、《寶鬘論》、《唯識普決論》、《初教經》、《罪報經》、《日輪供養經》、《乳光經》、《應供行經》、《福田報應經》、《寶印經》、《沙彌論》、《文殊請問要行論》、《提謂經》……如是等人造經論，總有五百四十餘卷。",
        "from": "T40n1804_001:0003c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代代漸出，文義淺局，多附世情。",
        "from": "T40n1804_001:0003c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋朝久已焚除，愚叢猶自濫用。",
        "from": "T40n1804_001:0003c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且述與律相應者，如前所列。",
        "from": "T40n1804_001:0003c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘文存略。",
        "from": "T40n1804_001:0003c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後明鈔興本意。",
        "from": "T40n1804_001:0003c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫鈔者，固令撮略正文，包括諸意也！",
        "from": "T40n1804_001:0003c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余智同螢曜，量實疎庸；",
        "from": "T40n1804_001:0003c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何敢輕侮猷言，動成戲論。",
        "from": "T40n1804_001:0003c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然，學有所承，承必知本；",
        "from": "T40n1804_001:0003c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每所引用，先加覆撿。",
        "from": "T40n1804_001:0003c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一事之下，廢立意多；",
        "from": "T40n1804_001:0003c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸師所存，情見繁廣。",
        "from": "T40n1804_001:0003c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今並刪略，止存文證。",
        "from": "T40n1804_001:0003c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及教通餘論，理相難知；",
        "from": "T40n1804_001:0003c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自非通解，焉能究盡？",
        "from": "T40n1804_001:0003c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具如集《義鈔》所顯。",
        "from": "T40n1804_001:0003c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而抄略證文，多不具委，但取文義堪來入宗者。",
        "from": "T40n1804_001:0003c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自外不盡之文，必欲尋討，知其始末，則非鈔者之意。",
        "from": "T40n1804_001:0003c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故文云：",
        "from": "T40n1804_001:0003c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸比丘欲不具說文句，佛言聽之。",
        "from": "T40n1804_001:0003c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《毘尼母論》云：",
        "from": "T40n1804_001:0003c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛令引要言妙辭，直顯其義。",
        "from": "T40n1804_001:0003c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶令臨機有用，無待訪於他人；",
        "from": "T40n1804_001:0003c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即事即行，豈復疑於罪福？",
        "from": "T40n1804_001:0003c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶恐後代加諸不急之務，增益其中，使真宗蕪穢，行者致迷；",
        "from": "T40n1804_001:0003c29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳥鼠之喻，復存於茲日矣！",
        "from": "T40n1804_001:0004a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之十條，並總束諸門，例科分析；",
        "from": "T40n1804_001:0004a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若攬收不盡，自下別論。",
        "from": "T40n1804_001:0004a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫宅身佛海，餐味法流，形廁僧伍，行唯三位。",
        "from": "T40n1804_001:0004a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遵仰正戒，識達持犯，則中卷之中，體相具矣。",
        "from": "T40n1804_001:0004a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自行既成，外德彰用，則上卷之中，綱領存矣。",
        "from": "T40n1804_001:0004a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他兩德，成相多途，則下卷之中，毛目顯矣。",
        "from": "T40n1804_001:0004a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三明行，無行不收；",
        "from": "T40n1804_001:0004a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三卷攝文，無文不委。",
        "from": "T40n1804_001:0004a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則事類相投，更難量擬；",
        "from": "T40n1804_001:0004a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若長途散釋，則寡於討論；",
        "from": "T40n1804_001:0004a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必隨相曲分，便過在繁碎。",
        "from": "T40n1804_001:0004a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今隨宜約略，通結指歸；",
        "from": "T40n1804_001:0004a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使舉領提網，毛目自整；",
        "from": "T40n1804_001:0004a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "載舒載覽，隨事隨依。",
        "from": "T40n1804_001:0004a11_3",
        "context_with_next_sentence": true
    }
]