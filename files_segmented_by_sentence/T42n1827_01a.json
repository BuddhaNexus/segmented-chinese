[
    {
        "source_sentence": "釋吉藏撰",
        "from": "T42n1827_01a:0238a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "1 捨罪福品(上之上-上之下)釋捨罪福品第一",
        "from": "T42n1827_01a:0238a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此論玄義已入大科。今釋品名開為六意。明",
        "from": "T42n1827_01a:0238a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "品偈第一。",
        "from": "T42n1827_01a:0238a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋偈義第二。",
        "from": "T42n1827_01a:0238a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辦多少第三。",
        "from": "T42n1827_01a:0238a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋相生第四。",
        "from": "T42n1827_01a:0238b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋品名第五。",
        "from": "T42n1827_01a:0238b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "簡捨破第六。",
        "from": "T42n1827_01a:0238b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此論梵本有於百偈。",
        "from": "T42n1827_01a:0238b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肇師云。",
        "from": "T42n1827_01a:0238b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後五十偈於此土無益。",
        "from": "T42n1827_01a:0238b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故闕而不傳。",
        "from": "T42n1827_01a:0238b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依其本名猶稱百也。",
        "from": "T42n1827_01a:0238b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問今所存者為是前之五十。",
        "from": "T42n1827_01a:0238b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是後之五十。",
        "from": "T42n1827_01a:0238b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為擇其精要取五十耶。",
        "from": "T42n1827_01a:0238b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答肇公既云後五十偈於此土無益。",
        "from": "T42n1827_01a:0238b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知今之所翻是前五十矣。",
        "from": "T42n1827_01a:0238b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問前之五十明義為不盡。",
        "from": "T42n1827_01a:0238b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答始捨罪福終辨破空邪無不破正無不顯。",
        "from": "T42n1827_01a:0238b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則義無不備也。",
        "from": "T42n1827_01a:0238b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋偈義第二。",
        "from": "T42n1827_01a:0238b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總談設教凡有三門。",
        "from": "T42n1827_01a:0238b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一但有長行無有偈頌。",
        "from": "T42n1827_01a:0238b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大品之類。",
        "from": "T42n1827_01a:0238b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二但有偈頌無有長行。",
        "from": "T42n1827_01a:0238b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法句之流。",
        "from": "T42n1827_01a:0238b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三具存二說。",
        "from": "T42n1827_01a:0238b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法華經等。",
        "from": "T42n1827_01a:0238b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在經既爾。",
        "from": "T42n1827_01a:0238b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論亦例之。",
        "from": "T42n1827_01a:0238b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一但有偈無有長行。",
        "from": "T42n1827_01a:0238b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如中論也。",
        "from": "T42n1827_01a:0238b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二但長行無有偈頌。",
        "from": "T42n1827_01a:0238b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是斯文。",
        "from": "T42n1827_01a:0238b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三具二種。",
        "from": "T42n1827_01a:0238b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如十二門論。",
        "from": "T42n1827_01a:0238b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問何故經論辨此三耶。",
        "from": "T42n1827_01a:0238b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答蓋是適化不同應機而作。",
        "from": "T42n1827_01a:0238b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故龍樹十住毘婆沙云。",
        "from": "T42n1827_01a:0238b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有樂長行。",
        "from": "T42n1827_01a:0238b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有樂偈頌。",
        "from": "T42n1827_01a:0238b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有樂雜說莊嚴章句者。",
        "from": "T42n1827_01a:0238b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所好各不同。",
        "from": "T42n1827_01a:0238b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我隨而不捨。",
        "from": "T42n1827_01a:0238b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問斯論既是長行。",
        "from": "T42n1827_01a:0238b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故云論有百偈從偈立名。",
        "from": "T42n1827_01a:0238b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答偈有二種。",
        "from": "T42n1827_01a:0238b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者通偈二者別偈。",
        "from": "T42n1827_01a:0238b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言別偈者。",
        "from": "T42n1827_01a:0238b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂四言五言六言七言皆以四句而成。",
        "from": "T42n1827_01a:0238b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目之為偈。",
        "from": "T42n1827_01a:0238b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂別偈也。",
        "from": "T42n1827_01a:0238b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者通偈謂首盧偈。",
        "from": "T42n1827_01a:0238b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋道安云。",
        "from": "T42n1827_01a:0238b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋是胡人數經法也。",
        "from": "T42n1827_01a:0238b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫問長行與偈但令三十二字滿即便名偈。",
        "from": "T42n1827_01a:0238b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂通偈也。",
        "from": "T42n1827_01a:0238b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中論十二門即是別偈。",
        "from": "T42n1827_01a:0238b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯論謂通偈也。",
        "from": "T42n1827_01a:0238b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆沙列四種偈。",
        "from": "T42n1827_01a:0238b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者以八字為一句。",
        "from": "T42n1827_01a:0238b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十二字為一偈。",
        "from": "T42n1827_01a:0238b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是結偈法。",
        "from": "T42n1827_01a:0238b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名阿莬吒闡提。",
        "from": "T42n1827_01a:0238b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是經論數法。",
        "from": "T42n1827_01a:0238b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是計書寫數法。",
        "from": "T42n1827_01a:0238b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者或六字為句名初偈。",
        "from": "T42n1827_01a:0238b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者二十六字為句者是後偈。",
        "from": "T42n1827_01a:0238b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此偈名摩羅。",
        "from": "T42n1827_01a:0238b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者減六字為句。",
        "from": "T42n1827_01a:0238b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此偈名周利荼。",
        "from": "T42n1827_01a:0238b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今謂四種中百論偈是最初偈也。",
        "from": "T42n1827_01a:0238c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言偈者。",
        "from": "T42n1827_01a:0238c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外國稱為祇夜亦云竭夜。",
        "from": "T42n1827_01a:0238c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今略其煩故但云偈。",
        "from": "T42n1827_01a:0238c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此土翻之句也頌也。",
        "from": "T42n1827_01a:0238c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人言。",
        "from": "T42n1827_01a:0238c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈是此門之名。",
        "from": "T42n1827_01a:0238c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訓之為竭。",
        "from": "T42n1827_01a:0238c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其明義竭盡故稱為偈。",
        "from": "T42n1827_01a:0238c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨多小第三。",
        "from": "T42n1827_01a:0238c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "什師云。",
        "from": "T42n1827_01a:0238c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論凡二十品。",
        "from": "T42n1827_01a:0238c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "品各五偈。",
        "from": "T42n1827_01a:0238c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故合有百偈。",
        "from": "T42n1827_01a:0238c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀此論文長短不定。",
        "from": "T42n1827_01a:0238c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初捨罪福將及半卷。",
        "from": "T42n1827_01a:0238c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一異等章唯有數紙。",
        "from": "T42n1827_01a:0238c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若品各五偈則並應百六十字。",
        "from": "T42n1827_01a:0238c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何少多不同。",
        "from": "T42n1827_01a:0238c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答據彼梵文。",
        "from": "T42n1827_01a:0238c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆本論則品各四偈字無少多。",
        "from": "T42n1827_01a:0238c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而今有長短者凡有三義。",
        "from": "T42n1827_01a:0238c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者天親注論有其少多。",
        "from": "T42n1827_01a:0238c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難解者則廣釋。",
        "from": "T42n1827_01a:0238c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易見者則略明。",
        "from": "T42n1827_01a:0238c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故文成豐約也。",
        "from": "T42n1827_01a:0238c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者注論之人觀品形勢。",
        "from": "T42n1827_01a:0238c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若起盡難明則義生問答鉤瑣蟬聯。",
        "from": "T42n1827_01a:0238c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故品則長。",
        "from": "T42n1827_01a:0238c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若始末易明直釋而已。",
        "from": "T42n1827_01a:0238c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在文則短。",
        "from": "T42n1827_01a:0238c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者羅什翻論詳察機宜。",
        "from": "T42n1827_01a:0238c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有益者則廣翻。",
        "from": "T42n1827_01a:0238c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無利者則略譯。",
        "from": "T42n1827_01a:0238c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以品文有其長短。",
        "from": "T42n1827_01a:0238c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸講匠不體斯意故謬釋紛綸。",
        "from": "T42n1827_01a:0238c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相生第四。",
        "from": "T42n1827_01a:0238c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言十品者。",
        "from": "T42n1827_01a:0238c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一捨罪福。",
        "from": "T42n1827_01a:0238c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二破神。",
        "from": "T42n1827_01a:0238c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三破一。",
        "from": "T42n1827_01a:0238c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四破異。",
        "from": "T42n1827_01a:0238c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五破情。",
        "from": "T42n1827_01a:0238c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六破塵。",
        "from": "T42n1827_01a:0238c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七破因。",
        "from": "T42n1827_01a:0238c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中有果。",
        "from": "T42n1827_01a:0238c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八破因中無果。",
        "from": "T42n1827_01a:0238c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九破常。",
        "from": "T42n1827_01a:0238c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十破空。",
        "from": "T42n1827_01a:0238c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問斯論十品何因緣故初捨罪福。",
        "from": "T42n1827_01a:0238c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答九十六術但知起罪感彼三塗。",
        "from": "T42n1827_01a:0238c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未悟著福迴流六趣。",
        "from": "T42n1827_01a:0238c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今欲示其出要之津。",
        "from": "T42n1827_01a:0238c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故建篇明捨罪福。",
        "from": "T42n1827_01a:0238c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨罪福則義無不員。",
        "from": "T42n1827_01a:0238c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但外道不受三空而立有神我。",
        "from": "T42n1827_01a:0238c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故第二破神。",
        "from": "T42n1827_01a:0238c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神義不立舉法來救。",
        "from": "T42n1827_01a:0238c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但一異為萬化大宗。",
        "from": "T42n1827_01a:0238c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜前破洗。",
        "from": "T42n1827_01a:0238c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有破一異二品。",
        "from": "T42n1827_01a:0238c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一異理隱容可應無。",
        "from": "T42n1827_01a:0238c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情塵顯現必當是有。",
        "from": "T42n1827_01a:0238c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍復破之。",
        "from": "T42n1827_01a:0238c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有情塵二品。",
        "from": "T42n1827_01a:0238c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外云。",
        "from": "T42n1827_01a:0238c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無情塵則壞因果。",
        "from": "T42n1827_01a:0238c26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果不壞則情塵不無。",
        "from": "T42n1827_01a:0238c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故次因中有果無果二品。",
        "from": "T42n1827_01a:0238c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自上已來並破無常。",
        "from": "T42n1827_01a:0238c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五種常法獨未除之。",
        "from": "T42n1827_01a:0238c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故須破常。",
        "from": "T42n1827_01a:0238c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與無常皆是有法。",
        "from": "T42n1827_01a:0238c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有法被破則墮於空。",
        "from": "T42n1827_01a:0239a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故次破空也。",
        "from": "T42n1827_01a:0239a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋品名第五。",
        "from": "T42n1827_01a:0239a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪以摧拆為義。",
        "from": "T42n1827_01a:0239a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造不善業感彼三塗。",
        "from": "T42n1827_01a:0239a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得於苦報摧拆行人。",
        "from": "T42n1827_01a:0239a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目之為罪。",
        "from": "T42n1827_01a:0239a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福是富饒為義。",
        "from": "T42n1827_01a:0239a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起於善業招人天樂果。",
        "from": "T42n1827_01a:0239a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故稱為福。",
        "from": "T42n1827_01a:0239a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨者入實相觀心無所依。",
        "from": "T42n1827_01a:0239a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故稱為捨。",
        "from": "T42n1827_01a:0239a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問罪招苦報可得云捨。",
        "from": "T42n1827_01a:0239a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福感樂果云何亦棄。",
        "from": "T42n1827_01a:0239a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答罪住時苦。",
        "from": "T42n1827_01a:0239a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福滅時苦。",
        "from": "T42n1827_01a:0239a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二時並苦故宜須雙棄。",
        "from": "T42n1827_01a:0239a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問罪福為是因名為是果稱。",
        "from": "T42n1827_01a:0239a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答罪福是因而受果稱。",
        "from": "T42n1827_01a:0239a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以然者。",
        "from": "T42n1827_01a:0239a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就果彰罪福其義則顯。",
        "from": "T42n1827_01a:0239a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故捨義方成。",
        "from": "T42n1827_01a:0239a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如罪報是苦故不應起罪。",
        "from": "T42n1827_01a:0239a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福報滅苦不應著福。",
        "from": "T42n1827_01a:0239a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以果既有過患故宜應捨因。",
        "from": "T42n1827_01a:0239a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因受果名意在於此。",
        "from": "T42n1827_01a:0239a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問福滅時苦。",
        "from": "T42n1827_01a:0239a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得依福捨罪。",
        "from": "T42n1827_01a:0239a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答福有二時成兩捨義。",
        "from": "T42n1827_01a:0239a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福報生時樂故依之捨罪。",
        "from": "T42n1827_01a:0239a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福報滅時苦故依空以捨福也。",
        "from": "T42n1827_01a:0239a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問罪若可捨故不造罪者。",
        "from": "T42n1827_01a:0239a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福既可捨亦應不修福耶。",
        "from": "T42n1827_01a:0239a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答有所得心而起罪福者。",
        "from": "T42n1827_01a:0239a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩從初發心皆不起也。",
        "from": "T42n1827_01a:0239a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為始行之人入道次第。",
        "from": "T42n1827_01a:0239a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三義論之。",
        "from": "T42n1827_01a:0239a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪但捨不取。",
        "from": "T42n1827_01a:0239a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空無相但取不捨。",
        "from": "T42n1827_01a:0239a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福則亦取亦捨。",
        "from": "T42n1827_01a:0239a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲依福捨罪故須修福。",
        "from": "T42n1827_01a:0239a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲入空是以捨之。",
        "from": "T42n1827_01a:0239a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問經云取捨是斷常戲論。",
        "from": "T42n1827_01a:0239a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今云何明取捨義耶。",
        "from": "T42n1827_01a:0239a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答今明捨者非取捨之捨。",
        "from": "T42n1827_01a:0239a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下云捨名心不著。",
        "from": "T42n1827_01a:0239a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無得無依故名為捨。",
        "from": "T42n1827_01a:0239a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是捨除取捨故名為捨。",
        "from": "T42n1827_01a:0239a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又為對眾生兩取故明二捨。",
        "from": "T42n1827_01a:0239a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩取病若除則無所捨。",
        "from": "T42n1827_01a:0239a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問既罪福二捨亦應邪正兩除。",
        "from": "T42n1827_01a:0239a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何破邪而申於正。",
        "from": "T42n1827_01a:0239a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答若以罪為邪以福為正。",
        "from": "T42n1827_01a:0239a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是邪正兩捨。",
        "from": "T42n1827_01a:0239a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但今明二取墮二邊故名之為邪。",
        "from": "T42n1827_01a:0239a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩捨是中道名之為正。",
        "from": "T42n1827_01a:0239a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故非類也。",
        "from": "T42n1827_01a:0239a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問捨罪福為何等人。",
        "from": "T42n1827_01a:0239a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答為始行人則依福捨罪。",
        "from": "T42n1827_01a:0239a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為久行人則依空捨福。",
        "from": "T42n1827_01a:0239a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此二人攝一切人盡。",
        "from": "T42n1827_01a:0239a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故為二人明二教也。",
        "from": "T42n1827_01a:0239b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又外道有二。",
        "from": "T42n1827_01a:0239b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者起有見。",
        "from": "T42n1827_01a:0239b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二起無見。",
        "from": "T42n1827_01a:0239b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修善捨惡破於無見。",
        "from": "T42n1827_01a:0239b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪福俱棄破於有見。",
        "from": "T42n1827_01a:0239b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是非有非無中道之義。",
        "from": "T42n1827_01a:0239b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故明兩捨。",
        "from": "T42n1827_01a:0239b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又為凡夫明兩捨。",
        "from": "T42n1827_01a:0239b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為二乘辨罪福。",
        "from": "T42n1827_01a:0239b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以凡夫著有故有六道罪福。",
        "from": "T42n1827_01a:0239b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今明罪福性空不應著有。",
        "from": "T42n1827_01a:0239b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二乘滯空。",
        "from": "T42n1827_01a:0239b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證空之時不能即知罪福宛然。",
        "from": "T42n1827_01a:0239b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故明雖畢竟空而罪福宛然。",
        "from": "T42n1827_01a:0239b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩捨即是波若。",
        "from": "T42n1827_01a:0239b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪福即為方便。",
        "from": "T42n1827_01a:0239b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令一切凡夫二乘具波若方便故明兩捨。",
        "from": "T42n1827_01a:0239b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是法華度五百由旬義也。",
        "from": "T42n1827_01a:0239b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又佛法有二。",
        "from": "T42n1827_01a:0239b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一世間教二出世法。",
        "from": "T42n1827_01a:0239b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若明五戒招人十善感天故誡惡勸善此世間教也。",
        "from": "T42n1827_01a:0239b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若明法尚應捨何況非法故依彼三空捨於二善得三乘聖道謂出世教也。",
        "from": "T42n1827_01a:0239b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今明捨罪謂世間教。",
        "from": "T42n1827_01a:0239b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明捨福辨出世教。",
        "from": "T42n1827_01a:0239b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故建篇。",
        "from": "T42n1827_01a:0239b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩捨則總攝五乘。",
        "from": "T42n1827_01a:0239b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良以外道邪言障五乘教。",
        "from": "T42n1827_01a:0239b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故偏破邪言遍申佛教。",
        "from": "T42n1827_01a:0239b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又佛法有二。",
        "from": "T42n1827_01a:0239b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一小乘教二大乘法。",
        "from": "T42n1827_01a:0239b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨惡修善棄生死而取涅槃謂小乘教也。",
        "from": "T42n1827_01a:0239b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無惡可捨無善可取。",
        "from": "T42n1827_01a:0239b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃非寂靜生死不雜亂謂大乘教也。",
        "from": "T42n1827_01a:0239b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故明此兩捨則攝大小乘。",
        "from": "T42n1827_01a:0239b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以外道雙障世出世教故論主雙破雙申。",
        "from": "T42n1827_01a:0239b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又智度論云。",
        "from": "T42n1827_01a:0239b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生法忍有二種障。",
        "from": "T42n1827_01a:0239b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一殺盜等名為麁障。",
        "from": "T42n1827_01a:0239b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二取捨心行於施戒稱為細障。",
        "from": "T42n1827_01a:0239b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今明捨罪則除其麁。",
        "from": "T42n1827_01a:0239b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明捨福以息其細。",
        "from": "T42n1827_01a:0239b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麁細既泯則無生觀現前。",
        "from": "T42n1827_01a:0239b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世佛菩薩出世大意令離二障得無生也。",
        "from": "T42n1827_01a:0239b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又佛法有二諦。",
        "from": "T42n1827_01a:0239b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為世諦故明依福捨罪。",
        "from": "T42n1827_01a:0239b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為第一義則依空捨福。",
        "from": "T42n1827_01a:0239b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸佛說法常依二諦。",
        "from": "T42n1827_01a:0239b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今欲破邪迷申乎二諦。",
        "from": "T42n1827_01a:0239b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故建言兩捨。",
        "from": "T42n1827_01a:0239b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦總破眾迷總申眾教。",
        "from": "T42n1827_01a:0239b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆一期出世如佛不異也。",
        "from": "T42n1827_01a:0239b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言捨者蓋是中道之異名佛性之別目。",
        "from": "T42n1827_01a:0239b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如涅槃云。",
        "from": "T42n1827_01a:0239b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明與無明愚者謂二。",
        "from": "T42n1827_01a:0239c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者了建知其無二。",
        "from": "T42n1827_01a:0239c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無二之性即是實性。",
        "from": "T42n1827_01a:0239c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實性者諸中道佛性也。",
        "from": "T42n1827_01a:0239c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "T42n1827_01a:0239c02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十善十惡亦復如是。",
        "from": "T42n1827_01a:0239c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知明於兩捨即辨中道佛性。",
        "from": "T42n1827_01a:0239c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨名不二法門品明罪福無二為入不二法門。",
        "from": "T42n1827_01a:0239c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知兩捨猶是正觀之異名不二之殊稱也。",
        "from": "T42n1827_01a:0239c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲對小乘取捨之論今建章明兩捨之論。",
        "from": "T42n1827_01a:0239c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小乘明取捨則是生滅教。",
        "from": "T42n1827_01a:0239c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故法華云。",
        "from": "T42n1827_01a:0239c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別說諸法五眾之生滅。",
        "from": "T42n1827_01a:0239c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "申小乘生滅經即小乘生滅論。",
        "from": "T42n1827_01a:0239c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘是無生滅經。",
        "from": "T42n1827_01a:0239c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云為諸菩薩說十二因緣不生滅。",
        "from": "T42n1827_01a:0239c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "申無生滅經即是無生滅論。",
        "from": "T42n1827_01a:0239c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故中論發旨唱不生不滅。",
        "from": "T42n1827_01a:0239c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此論命初標於兩捨。",
        "from": "T42n1827_01a:0239c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知為簡異小乘取捨論明大乘兩捨論也。",
        "from": "T42n1827_01a:0239c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問捨有幾種。",
        "from": "T42n1827_01a:0239c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答略明有二。",
        "from": "T42n1827_01a:0239c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者為始學之人明於漸捨。",
        "from": "T42n1827_01a:0239c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故初則依福捨罪後則依空捨福。",
        "from": "T42n1827_01a:0239c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如波若四攝品云。",
        "from": "T42n1827_01a:0239c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩見眾生起於空倒。",
        "from": "T42n1827_01a:0239c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令其悟於倒空。",
        "from": "T42n1827_01a:0239c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故漸漸拔之。",
        "from": "T42n1827_01a:0239c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初於慳法拔出令行布施。",
        "from": "T42n1827_01a:0239c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次於施拔之教令持戒。",
        "from": "T42n1827_01a:0239c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次於戒拔之令修禪。",
        "from": "T42n1827_01a:0239c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於二乘地拔出令住大乘。",
        "from": "T42n1827_01a:0239c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此漸捨也。",
        "from": "T42n1827_01a:0239c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次為大福德深種善根人發旨即明頓捨。",
        "from": "T42n1827_01a:0239c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂從初發心即習不二正觀。",
        "from": "T42n1827_01a:0239c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不慳不施名為檀那。",
        "from": "T42n1827_01a:0239c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至不智不愚目為波若。",
        "from": "T42n1827_01a:0239c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百論疏卷之上上畢",
        "from": "T42n1827_01a:0239c23_100",
        "context_with_next_sentence": false
    }
]