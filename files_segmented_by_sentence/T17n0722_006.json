[
    {
        "source_sentence": "妙法聖念處經卷第六",
        "from": "T17n0722_006:0434b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天中印度摩伽陀國那爛陀寺",
        "from": "T17n0722_006:0434b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏傳教大師賜紫沙門臣法天",
        "from": "T17n0722_006:0434b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「於罪不怖畏，　　彼人無智慧，",
        "from": "T17n0722_006:0434b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後至命終時，　　苦惱恒燒燃，",
        "from": "T17n0722_006:0434b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍天界中，　　墮落誰能見。",
        "from": "T17n0722_006:0434c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼恒貪婬樂，　　於此莫能知，",
        "from": "T17n0722_006:0434c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婬慾生虛誑，　　迷惑於有情，",
        "from": "T17n0722_006:0434c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牽引落三途，　　如繩而繫縛。",
        "from": "T17n0722_006:0434c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅恒如是，　　有情須自利，",
        "from": "T17n0722_006:0434c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調柔身口意，　　煩惱勿令生，",
        "from": "T17n0722_006:0434c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法境等須息。",
        "from": "T17n0722_006:0434c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增癡墮無常，　　不覺欲火燒，",
        "from": "T17n0722_006:0434c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離於親眷，　　朋友善知識，",
        "from": "T17n0722_006:0434c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "骨肉并眷屬，　　大苦死來時，",
        "from": "T17n0722_006:0434c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波吒何能說？",
        "from": "T17n0722_006:0434c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如山忽倒摧，　　須臾不可停，",
        "from": "T17n0722_006:0434c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那而滅謝。",
        "from": "T17n0722_006:0434c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若處一切智，無罪無輪迴，　　究竟出苦源；",
        "from": "T17n0722_006:0434c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天恒愛樂，　　欲海深無底，",
        "from": "T17n0722_006:0434c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何能有足期？",
        "from": "T17n0722_006:0434c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如酥油灑火，　　種種莊嚴貌，",
        "from": "T17n0722_006:0434c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破壞出世因，　　流轉四趣中。",
        "from": "T17n0722_006:0434c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人傍地獄鬼，　　生死恒無間，",
        "from": "T17n0722_006:0434c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往復如陶輪，　　群品大愚癡，",
        "from": "T17n0722_006:0434c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不了煩惱性。",
        "from": "T17n0722_006:0434c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離於貪愛，　　當獲最上因，",
        "from": "T17n0722_006:0434c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫無繫絆。",
        "from": "T17n0722_006:0434c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸苦病不侵，　　降伏於貪瞋，",
        "from": "T17n0722_006:0434c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長獲安樂道。",
        "from": "T17n0722_006:0434c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羂索不能縛，　　智慧漸圓明，",
        "from": "T17n0722_006:0434c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照知一切事。",
        "from": "T17n0722_006:0434c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而起無相心，　　離垢絕囂塵，",
        "from": "T17n0722_006:0434c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟到彼岸。",
        "from": "T17n0722_006:0434c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　於彼苦樂境，洞然無所得，　　而入大解脫。",
        "from": "T17n0722_006:0435a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住空寂舍，　　復起慈悲心，",
        "from": "T17n0722_006:0435a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍念有情故，　　示苦智真如。",
        "from": "T17n0722_006:0435a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離於羂索，　　令意斷疑慮，",
        "from": "T17n0722_006:0435a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永除於貪愛，　　解脫苦惱怖，",
        "from": "T17n0722_006:0435a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得最上慧，　　悟彼集散空。",
        "from": "T17n0722_006:0435a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設壽八萬劫，　　亦復墮無常，",
        "from": "T17n0722_006:0435a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此可恒安住，　　天界永無失。",
        "from": "T17n0722_006:0435a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見惡而生慢，　　於罪不思惟，",
        "from": "T17n0722_006:0435a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚迷無方便，　　恒求於快樂。",
        "from": "T17n0722_006:0435a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻如砂聚中，　　求油終不得，",
        "from": "T17n0722_006:0435a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作罪業行，　　恒常而逼迫。",
        "from": "T17n0722_006:0435a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦樹罪根深，　　一切惡生長，",
        "from": "T17n0722_006:0435a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說此真如，　　定為法非法。",
        "from": "T17n0722_006:0435a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼意恥作罪，　　後復無煩惱，",
        "from": "T17n0722_006:0435a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益廣無邊，　　獲至真如際。",
        "from": "T17n0722_006:0435a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若復愚迷，於佛言教而不信受，後至無常，自得苦惱，經無數百千俱胝那由他、阿沒那等，破壞人天，無常罪火決定焚燒，此不盡劫。",
        "from": "T17n0722_006:0435a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞿曇告言：",
        "from": "T17n0722_006:0435a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『天復云何而得久住？",
        "from": "T17n0722_006:0435a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』喻如水沫、芭蕉，無有纖毫真實，幻化非久。",
        "from": "T17n0722_006:0435a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若恒愛此快樂，無有是處。",
        "from": "T17n0722_006:0435a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，彼佛問彼天眾：",
        "from": "T17n0722_006:0435a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「知此義不？",
        "from": "T17n0722_006:0435a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」天，意歡喜，如聞五樂，多獲快樂，得五功德。",
        "from": "T17n0722_006:0435a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復說言：",
        "from": "T17n0722_006:0435a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼有飛禽名曰嬉戲，能善說法。",
        "from": "T17n0722_006:0435a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為彼天眾，即說伽他曰：",
        "from": "T17n0722_006:0435a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「『有欲愛不足，　　無因人意足，",
        "from": "T17n0722_006:0435a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發起不足心，　　如是無知死。",
        "from": "T17n0722_006:0435a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生界，　　形類有多般，",
        "from": "T17n0722_006:0435a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長遠時分中，　　不能修方便。",
        "from": "T17n0722_006:0435b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不受安樂，　　決定墮輪迴，",
        "from": "T17n0722_006:0435b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒處於地獄，　　生生亦如是。",
        "from": "T17n0722_006:0435b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「若實宣說，帝釋境界，富貴殊勝異於諸天。",
        "from": "T17n0722_006:0435b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此輪迴亦不能免。",
        "from": "T17n0722_006:0435b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定無常乃普遍天上，未有微妙之處，可避無常，而皆墮落。",
        "from": "T17n0722_006:0435b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是時天帝善解法相，名憍尸迦，為彼天父，種種精進，說多因行，而諸天眾猶不省悟，誰能樂修靜行，遠離罪垢？",
        "from": "T17n0722_006:0435b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯縱愚迷，心著放逸，於斯教誨而不受持，久遠無邊。",
        "from": "T17n0722_006:0435b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何不覺？",
        "from": "T17n0722_006:0435b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸愚人，樂作惡因；",
        "from": "T17n0722_006:0435b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼後身，而被罪惡種種破壞，寧知惡業隨眠纏縛。",
        "from": "T17n0722_006:0435b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，苾芻而說頌曰：",
        "from": "T17n0722_006:0435b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若行善利，　　以其臥具，　　飲食衣等，",
        "from": "T17n0722_006:0435b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供給供養，　　尊卑之眾，　　不為自身，",
        "from": "T17n0722_006:0435b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而求福利；",
        "from": "T17n0722_006:0435b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　或觀自身，　　誰作主宰？",
        "from": "T17n0722_006:0435b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃遇惡境，　　作罪怨家，　　固來欺陵，",
        "from": "T17n0722_006:0435b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而起真實。",
        "from": "T17n0722_006:0435b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　離相忍辱，　　智者審觀，都無病痛，　　苦惱之難。",
        "from": "T17n0722_006:0435b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　唯有現在，不靜之物，　　作如是身；",
        "from": "T17n0722_006:0435b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　而復此身，剎那不住，　　盛壯亦然，　　破壞何身？",
        "from": "T17n0722_006:0435b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生迷醉，　　於自財物，　　不作利益，",
        "from": "T17n0722_006:0435b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長罪業，　　不受教命，　　亦不行施，",
        "from": "T17n0722_006:0435b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處，　　心不受用，　　賊等窺壞。",
        "from": "T17n0722_006:0435b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何護持？",
        "from": "T17n0722_006:0435b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼財殊妙，　　而復棄捨，　　如棄草木，",
        "from": "T17n0722_006:0435b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不愛著；",
        "from": "T17n0722_006:0435b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　貧劣有情，　　恒行救度，離垢無著，　　今世後世，　　獲七眾戒。",
        "from": "T17n0722_006:0435b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救度最上，　　戒護於人，　　當生天上，",
        "from": "T17n0722_006:0435b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧廣大。",
        "from": "T17n0722_006:0435c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病等枷鎖，　　過大嶮惡，　　輪迴之橋，",
        "from": "T17n0722_006:0435c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到彼堅牢，　　涅槃彼岸。",
        "from": "T17n0722_006:0435c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得無生忍，　　喻如擔負，　　其物輕少，",
        "from": "T17n0722_006:0435c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠出長途，　　而不疲乏；",
        "from": "T17n0722_006:0435c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若人擔負，惡業輕少，　　遐歷世間，　　而不沈沒。",
        "from": "T17n0722_006:0435c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如飛禽，　　兩翼壯健，　　高往虛空，",
        "from": "T17n0722_006:0435c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠疾可到。",
        "from": "T17n0722_006:0435c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若人持戒，　　守護堅牢，欲往生天，　　亦復如是。",
        "from": "T17n0722_006:0435c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」復有飛禽，名現真如，住彼白山，而能觀察，即說頌曰：",
        "from": "T17n0722_006:0435c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「喻我形色，　　不住剎那，　　快樂亦然，",
        "from": "T17n0722_006:0435c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚迷不覺。",
        "from": "T17n0722_006:0435c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若一切類，　　善相多般，輪迴生時，　　定隨破壞。",
        "from": "T17n0722_006:0435c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　彼福破壞，一生亦然，　　死王得便，　　罪意何免？",
        "from": "T17n0722_006:0435c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒行快樂，　　無財黑繩，　　摧壞有情，",
        "from": "T17n0722_006:0435c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無病強力，　　安樂遠離。",
        "from": "T17n0722_006:0435c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　死王近來，近則心迷，　　群生命壞，　　罪破長時。",
        "from": "T17n0722_006:0435c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天人輪轉，　　不覺根迷，　　遠離安樂，",
        "from": "T17n0722_006:0435c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮閻羅界，　　方知業果。",
        "from": "T17n0722_006:0435c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　快樂剎那，而身衰朽，　　悅諸塵境，　　不覺貪著；",
        "from": "T17n0722_006:0435c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "快樂受盡，　　老死王侵，　　諸根對境，",
        "from": "T17n0722_006:0435c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戀著不足。",
        "from": "T17n0722_006:0435c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無慧燈，　　照見塵境，　　受行境界，",
        "from": "T17n0722_006:0435c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執我分別，　　樂著虛妄，　　欲火恒生。",
        "from": "T17n0722_006:0435c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境力如風，　　吹欲火盛，　　智覺真如，",
        "from": "T17n0722_006:0435c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟成妄。",
        "from": "T17n0722_006:0435c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　一切愚迷，　　嬉戲不覺，恒行境界，　　吹於欲火。",
        "from": "T17n0722_006:0435c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　天人行欲，墮彼天界，　　彼具天德，　　實得天樂；",
        "from": "T17n0722_006:0435c29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衰相現前，　　不壞何往？",
        "from": "T17n0722_006:0436a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　剎那不住，念念生滅，　　暫住非久，　　彼命如是。",
        "from": "T17n0722_006:0436a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此境屬他，　　一心不覺，　　五德天樂，",
        "from": "T17n0722_006:0436a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞苦速離。",
        "from": "T17n0722_006:0436a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三障垢靜，　　歸依三寶，　　三業廓然，",
        "from": "T17n0722_006:0436a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟得最上，　　三佛菩提；",
        "from": "T17n0722_006:0436a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　雖生罪地，罪垢不染，　　留心作善。",
        "from": "T17n0722_006:0436a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」彼有焰魔獄卒，為彼眾生而說頌曰：",
        "from": "T17n0722_006:0436a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「意懷貪欲，　　嫌棄善緣，　　不離輪迴，",
        "from": "T17n0722_006:0436a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此苦果，　　不依天行，　　而作罪因。",
        "from": "T17n0722_006:0436a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼後無常，　　反恨作惡，　　利刀割體，",
        "from": "T17n0722_006:0436a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猛火燒身，　　猶未為傷。",
        "from": "T17n0722_006:0436a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦不可忍，　　眼觀美色，　　如實得樂，",
        "from": "T17n0722_006:0436a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧知恒苦；",
        "from": "T17n0722_006:0436a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　聞聲耽味，　　其過亦然，作罪冤家。",
        "from": "T17n0722_006:0436a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　是故捨離，　　彼三冤家；",
        "from": "T17n0722_006:0436a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纏縛罪人，　　破人安樂，　　貪癡和合，",
        "from": "T17n0722_006:0436a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離戒品，　　因墮地獄。",
        "from": "T17n0722_006:0436a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若行戒律，後得福善；",
        "from": "T17n0722_006:0436a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若違戒律，　　後得煩惱。",
        "from": "T17n0722_006:0436a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲酒殺命，　　離他婦女，　　邪見兩舌，",
        "from": "T17n0722_006:0436a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不守威儀，　　縱情放逸，　　破壞有情，",
        "from": "T17n0722_006:0436a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因沈惡道。",
        "from": "T17n0722_006:0436a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　貪著邪行，　　而復惡口，今世後世，　　無彼安樂。",
        "from": "T17n0722_006:0436a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　遠離惡人，親近善友，　　滅此罪根。",
        "from": "T17n0722_006:0436a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　不信此業，無得業果，　　無眾安樂。",
        "from": "T17n0722_006:0436a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　惡果根本，煩惱後燒。",
        "from": "T17n0722_006:0436a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若作妄語，　　本非法師，我解深法，　　彼後無常，　　得魔業果；",
        "from": "T17n0722_006:0436a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉此人身，　　而生惡趣。",
        "from": "T17n0722_006:0436a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　是故如來，說此無明，　　一切貪欲，　　何得快樂？",
        "from": "T17n0722_006:0436a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知足無貪，　　身離煩惱。",
        "from": "T17n0722_006:0436a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　欲生快樂，是名快樂。",
        "from": "T17n0722_006:0436b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　解脫相應，　　得最上樂。",
        "from": "T17n0722_006:0436b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若貪快樂，　　如毒和水；",
        "from": "T17n0722_006:0436b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　解脫快樂，如乳和水，　　欲火燒害，　　愚盲不覺。",
        "from": "T17n0722_006:0436b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復貪愛，　　度量財利，　　酤賣酒肉，",
        "from": "T17n0722_006:0436b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得財無數，　　心猶未足；",
        "from": "T17n0722_006:0436b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　無常殺鬼，速來牽引。",
        "from": "T17n0722_006:0436b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若耽欲樂，　　樂住境界，得不快樂；",
        "from": "T17n0722_006:0436b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如來說此，　　夢覺法喻，如乾闥城，　　如空無實；",
        "from": "T17n0722_006:0436b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如水上沫；",
        "from": "T17n0722_006:0436b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如芭蕉堅；",
        "from": "T17n0722_006:0436b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如彼火毒，　　欲境亦然。",
        "from": "T17n0722_006:0436b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若味因果，　　知欲過罪，　　不迷真如，",
        "from": "T17n0722_006:0436b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就智慧，　　獲靜思惟；",
        "from": "T17n0722_006:0436b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　去其貪愛，苦惱不生。",
        "from": "T17n0722_006:0436b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世毒藥，　　彼意不足，　　墮落天界，",
        "from": "T17n0722_006:0436b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復墮地獄。",
        "from": "T17n0722_006:0436b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　欲賺愚迷，　　喻彼懸河，亦如電閃。",
        "from": "T17n0722_006:0436b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　世間毒力，　　莫勝女色，思想欲增，　　如火熾盛。",
        "from": "T17n0722_006:0436b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離欲寂靜，　　無前無後，　　亦無中間，",
        "from": "T17n0722_006:0436b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如如而行。",
        "from": "T17n0722_006:0436b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　增長亦爾，　　彼得欲苦，等觸大焰。",
        "from": "T17n0722_006:0436b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　知如是過，　　智者遠離，速離欲故，　　定得安樂。",
        "from": "T17n0722_006:0436b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那由他天，　　以欲行故，　　墮火毒獄，",
        "from": "T17n0722_006:0436b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "器杖治罰，　　其毒如火，　　遠離快樂。",
        "from": "T17n0722_006:0436b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不行欲因，　　如上地獄，　　不見不聞。",
        "from": "T17n0722_006:0436b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若貪欲人，　　斷其欲貪，　　亦無苦惱。",
        "from": "T17n0722_006:0436b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故無垢，　　得意清淨，　　於一切處，",
        "from": "T17n0722_006:0436b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅欲火焰，　　入彼種種，　　最上善業，",
        "from": "T17n0722_006:0436b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼行無染。",
        "from": "T17n0722_006:0436b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，帝釋觀察飛禽住莊嚴樹，色喻檀金；",
        "from": "T17n0722_006:0436b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼法因果，正見善業，而說頌曰：",
        "from": "T17n0722_006:0436b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「正見善業，　　如彼大樹，　　欝茂金色，",
        "from": "T17n0722_006:0436c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種莊嚴。",
        "from": "T17n0722_006:0436c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　智者所說，　　如善果報，處處出生。",
        "from": "T17n0722_006:0436c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　不善若善，　　得彼人身，復行善業，　　得生天上；",
        "from": "T17n0722_006:0436c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下沈地獄，　　慾迷善意，　　而復不得，",
        "from": "T17n0722_006:0436c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上良藥。",
        "from": "T17n0722_006:0436c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若知果報，　　意不愛慾。",
        "from": "T17n0722_006:0436c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生境界，　　迷醉味著，　　若恒行貪，",
        "from": "T17n0722_006:0436c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡定同生。",
        "from": "T17n0722_006:0436c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　女生煩惱，　　如世間火，若此火生，　　煩惱如是。",
        "from": "T17n0722_006:0436c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生眾生心，　　破壞世間，　　一切法滅，",
        "from": "T17n0722_006:0436c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為地獄因。",
        "from": "T17n0722_006:0436c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口甜心毒，　　情愛不恒，　　愛戀須臾，",
        "from": "T17n0722_006:0436c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄背亦爾。",
        "from": "T17n0722_006:0436c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　彼性浮囂，　　可喻掣電，誑詀有情，　　詐行恩愛；",
        "from": "T17n0722_006:0436c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　天人龍鬼，羅剎眷屬，　　境界亦爾。",
        "from": "T17n0722_006:0436c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬彼黑毒，　　種姓不擇，　　勢力不顧，",
        "from": "T17n0722_006:0436c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛恚不恒，　　性如風火，　　唯募財物，",
        "from": "T17n0722_006:0436c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊無終始，　　如有嶮難，　　嫌棄遠離。",
        "from": "T17n0722_006:0436c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是富人，　　彼即愛樂，　　若住貧賤，",
        "from": "T17n0722_006:0436c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急急離別；",
        "from": "T17n0722_006:0436c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　譬如遊蜂，　　花卉芬芳，競來採食，　　若樹乾朽，　　一切遠離。",
        "from": "T17n0722_006:0436c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無財亦然，　　女人遠離。",
        "from": "T17n0722_006:0436c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　女人黑暗，心縱顛狂，　　破壞勝因，　　罔知良善。",
        "from": "T17n0722_006:0436c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如女人縛，　　天縛亦爾，　　若值女縛，",
        "from": "T17n0722_006:0436c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定墮地獄，　　若貪女色，　　貪中第一。",
        "from": "T17n0722_006:0436c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生，　　雖曉慾業，　　而猶耽著，",
        "from": "T17n0722_006:0436c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故無知，　　迷人不覺。",
        "from": "T17n0722_006:0436c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詐吐心誠，　　惑他信己，　　身雖同處，",
        "from": "T17n0722_006:0436c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心則差殊，　　損壞有情；",
        "from": "T17n0722_006:0436c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　毒如蛇蝎，方便多求，　　一切養育。",
        "from": "T17n0722_006:0437a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　女人行德，而不能為。",
        "from": "T17n0722_006:0437a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如是自性，　　殊無測度，智者不著，　　心恒決定。",
        "from": "T17n0722_006:0437a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」忉利天宮有善法堂。",
        "from": "T17n0722_006:0437a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時，諸天會善法堂。",
        "from": "T17n0722_006:0437a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如是散亂者，飛禽為彼而說頌曰：",
        "from": "T17n0722_006:0437a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如飛禽，　　隨其自性，　　樂厭不同，",
        "from": "T17n0722_006:0437a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有二種：",
        "from": "T17n0722_006:0437a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　一見蓮華，　　而復樂著，若見林野，　　而自厭離；",
        "from": "T17n0722_006:0437a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　一見林野，意欲樂住，　　如見蓮華，　　却思遠離。",
        "from": "T17n0722_006:0437a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生亦爾，　　林如靜善，　　華喻欲貪，",
        "from": "T17n0722_006:0437a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者樂林，　　而深適意；",
        "from": "T17n0722_006:0437a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　天人顛倒，反募蓮華。",
        "from": "T17n0722_006:0437a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如出暖日，　　能去大寒，解脫之樂，　　亦復如是。",
        "from": "T17n0722_006:0437a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　貪中生苦，樂謝何安？",
        "from": "T17n0722_006:0437a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　智者不迷，　　而求解脫，於一切處，　　為最上樂；",
        "from": "T17n0722_006:0437a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　住牟尼林，能善觀察，　　住意無貪。",
        "from": "T17n0722_006:0437a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　天人最上，住此欲貪，　　而不久遠。",
        "from": "T17n0722_006:0437a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若行無貪，樂中最上，　　居林寂靜，　　行中第一。",
        "from": "T17n0722_006:0437a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切苦斷，　　受甜惡行，　　誑賺有情。",
        "from": "T17n0722_006:0437a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適意林巒，　　宜善觀察，　　心善觀察，",
        "from": "T17n0722_006:0437a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒處安樂，　　心行無貪，　　樂處林野。",
        "from": "T17n0722_006:0437a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人樂林，　　心恒純善，　　離欲無貪，",
        "from": "T17n0722_006:0437a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得寂靜樂。",
        "from": "T17n0722_006:0437a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若人煩惱，　　怖見林間，貪愛倍增，　　而自燒煮。",
        "from": "T17n0722_006:0437a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　棄背貪愛，無垢清淨，　　心定生生，　　常獲安樂。",
        "from": "T17n0722_006:0437a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如具富貴，　　福盡成空。",
        "from": "T17n0722_006:0437a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　盛處少年，老侵頓易，　　一切恩愛，　　定有別離。",
        "from": "T17n0722_006:0437a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有為，　　和合暫爾，　　此世間法，",
        "from": "T17n0722_006:0437a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正覺正說。",
        "from": "T17n0722_006:0437a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若覺愚迷，　　捨愛知足，入寂靜林，　　獲最上樂。",
        "from": "T17n0722_006:0437b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　衒己俊利，思愛多方，　　遠離善林，　　永失利樂。",
        "from": "T17n0722_006:0437b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "林間默觀，　　寂靜相應，　　適意無貪，",
        "from": "T17n0722_006:0437b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善心成滿。",
        "from": "T17n0722_006:0437b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　是故聚落，　　散亂恒生；",
        "from": "T17n0722_006:0437b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處山林，　　離諸貪愛。",
        "from": "T17n0722_006:0437b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　汝意速疾，厭離愚迷，　　最上靜林，　　相應住處。",
        "from": "T17n0722_006:0437b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心行若靜，　　永離煩惱，　　行若相應，",
        "from": "T17n0722_006:0437b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善根增盛。",
        "from": "T17n0722_006:0437b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　假使有人，　　得千帝釋，報壽若終，　　亦歸生滅。",
        "from": "T17n0722_006:0437b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　恒行貪欲，一切不見，　　被欲降伏，　　而生眾苦。",
        "from": "T17n0722_006:0437b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲愛之樂，　　須臾暫住，　　不久即滅。",
        "from": "T17n0722_006:0437b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心如怨家，　　能離彼樂，　　彼欲無得。",
        "from": "T17n0722_006:0437b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱苦果，　　皆從欲生，　　解脫生樂，",
        "from": "T17n0722_006:0437b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼樂真實。",
        "from": "T17n0722_006:0437b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　於善逝行，　　縱任相應，離欲無貪，　　獲樂無盡。",
        "from": "T17n0722_006:0437b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　五欲之樂，先甜後苦，　　樂相壞時，　　而沈地獄。",
        "from": "T17n0722_006:0437b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無貪之善，　　初後中間，　　離垢清淨，",
        "from": "T17n0722_006:0437b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受樂無窮，　　是真善母。",
        "from": "T17n0722_006:0437b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　愚迷欲樂，云何離彼？",
        "from": "T17n0722_006:0437b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　過失恒生，　　中後深苦。",
        "from": "T17n0722_006:0437b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪行云何，　　不見快樂？",
        "from": "T17n0722_006:0437b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有其毒花，　　其色鮮艶，　　其體有毒，",
        "from": "T17n0722_006:0437b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人若觸花，　　毒害於身；",
        "from": "T17n0722_006:0437b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　罪行欲樂，其毒亦然。",
        "from": "T17n0722_006:0437b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　又如當風，　　執彼火炬；",
        "from": "T17n0722_006:0437b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如飛蛾，　　投其燈焰；",
        "from": "T17n0722_006:0437b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　欲樂之火，燒害亦然。",
        "from": "T17n0722_006:0437b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　是故欲毒，　　恒須遠離。",
        "from": "T17n0722_006:0437b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天著欲故，　　積惡虛生，　　人募愛貪，",
        "from": "T17n0722_006:0437b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚盈罪行。",
        "from": "T17n0722_006:0437b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　是故欲火，　　焚燒善根，賺失天人，　　沈斯惡趣。",
        "from": "T17n0722_006:0437b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若未命謝，速迴心意，　　於一切善，　　修令增長。",
        "from": "T17n0722_006:0437b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪等惑亂，　　三過生塵，　　三毒作一，",
        "from": "T17n0722_006:0437c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪網猶大。",
        "from": "T17n0722_006:0437c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歌舞唱妓，　　耳目順情，　　天意如石，",
        "from": "T17n0722_006:0437c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而被牽動。",
        "from": "T17n0722_006:0437c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　一切欲境，　　蓋覆靜心，沈溺愛河，　　無時超度。",
        "from": "T17n0722_006:0437c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　天何愚迷，欲賺不覺？",
        "from": "T17n0722_006:0437c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　譬如毒樹，　　開其毒花，蜂蛾採食，　　毒殞其命。",
        "from": "T17n0722_006:0437c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　貪欲之毒，損害亦爾，　　而墮三途，　　如火燒木。",
        "from": "T17n0722_006:0437c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天人不覺，　　生此罪地，　　受苦終盡，",
        "from": "T17n0722_006:0437c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方離泥黎。",
        "from": "T17n0722_006:0437c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　天人愚迷，　　不思作善，罪惡境界，　　彼無一信。",
        "from": "T17n0722_006:0437c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　智者審觀，真如幻夢，　　愚人非夢，　　為地獄因。",
        "from": "T17n0722_006:0437c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故離欲，　　得解脫善，　　棄背惡行，",
        "from": "T17n0722_006:0437c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益善因。",
        "from": "T17n0722_006:0437c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　彼利若行，　　永離諸惡，天無黑行。",
        "from": "T17n0722_006:0437c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　彼有智者，　　正見決定，不樂散亂，　　獲種種福。",
        "from": "T17n0722_006:0437c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，世尊教受天子，行不散亂行，而說頌曰：",
        "from": "T17n0722_006:0437c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「天人宮殿，　　散亂之根，　　迷醉樂著，",
        "from": "T17n0722_006:0437c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而墮輪迴。",
        "from": "T17n0722_006:0437c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若離散亂，　　輪迴亦脫。",
        "from": "T17n0722_006:0437c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼散亂根，　　即是無明，　　自性黑暗，",
        "from": "T17n0722_006:0437c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人無眼。",
        "from": "T17n0722_006:0437c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　我觀彼過，　　迷火不別，愚癡深廣，　　散亂亦然。",
        "from": "T17n0722_006:0437c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積聚財寶，　　而自育養，　　復更散亂，",
        "from": "T17n0722_006:0437c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墜墮惡趣。",
        "from": "T17n0722_006:0437c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本望離苦，　　悅意快樂，　　寧知命殞，",
        "from": "T17n0722_006:0437c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大苦惱，　　集欲之樂，　　不久即散。",
        "from": "T17n0722_006:0437c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生，　　業壽有限，　　少壯剎那，",
        "from": "T17n0722_006:0437c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即當衰老，　　善惡業縛，　　誰得自在？",
        "from": "T17n0722_006:0437c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如樂主，　　撚弄木人，　　須假線絲，",
        "from": "T17n0722_006:0437c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方成作用；",
        "from": "T17n0722_006:0438a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　有情亦爾，　　須假惑業，方處輪迴。",
        "from": "T17n0722_006:0438a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若離愛貪，　　則無作用。",
        "from": "T17n0722_006:0438a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非久業行，　　智者不信；",
        "from": "T17n0722_006:0438a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　遠離一切，散亂方便，　　若離散亂，　　不生三界。",
        "from": "T17n0722_006:0438a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人，　　墜墮深崖，　　其中猶有，",
        "from": "T17n0722_006:0438a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不失命者。",
        "from": "T17n0722_006:0438a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若人散亂，　　墮三界崖，其中未有，　　得出離者。",
        "from": "T17n0722_006:0438a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　一切惑業，散亂最上，　　於晝夜中，　　恒不安樂。",
        "from": "T17n0722_006:0438a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若世間人，　　纖毫散亂，　　破壞有情，",
        "from": "T17n0722_006:0438a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出世之意，　　是故遠離。",
        "from": "T17n0722_006:0438a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」彼世尊座如實說已。",
        "from": "T17n0722_006:0438a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天主帝釋發尊重心，敷其座具，頭面禮足，起立合掌，見伽他書，心生怖畏，頌曰：",
        "from": "T17n0722_006:0438a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若不散亂，　　如彼甘露；",
        "from": "T17n0722_006:0438a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若行散亂，而墮無常。",
        "from": "T17n0722_006:0438a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　不散亂人，　　天中最上。",
        "from": "T17n0722_006:0438a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散亂之行，　　輪迴之根，　　清淨之行，",
        "from": "T17n0722_006:0438a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂之本。",
        "from": "T17n0722_006:0438a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　是故正定，　　於一切處，獲最上樂。",
        "from": "T17n0722_006:0438a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若於欲樂，　　如怖極苦，散亂大毒，　　同壞眾善，　　迷毒散亂。",
        "from": "T17n0722_006:0438a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人行惡作，　　不從散亂，　　能得安樂。",
        "from": "T17n0722_006:0438a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼智者，　　平等宣說，　　德與無德，",
        "from": "T17n0722_006:0438a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切執我，　　為苦樂根；",
        "from": "T17n0722_006:0438a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如我世尊，伽他書典，　　離欲清淨，　　獲益安樂。",
        "from": "T17n0722_006:0438a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」妙法聖念處經卷第六",
        "from": "T17n0722_006:0438a24_100",
        "context_with_next_sentence": false
    }
]