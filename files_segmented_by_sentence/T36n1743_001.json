[
    {
        "source_sentence": "皇帝降誕日於麟德殿講大方廣",
        "from": "T36n1743_001:1064c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛華嚴經玄義一部",
        "from": "T36n1743_001:1064c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大安國寺沙門靜居謹上",
        "from": "T36n1743_001:1064c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經七處、九會，三十九品，凡八十卷。",
        "from": "T36n1743_001:1064c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一菩提場會，經六品：",
        "from": "T36n1743_001:1064c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一世主妙嚴品，五卷；",
        "from": "T36n1743_001:1064c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二如來現相品，一卷；",
        "from": "T36n1743_001:1064c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三普賢三昧品、四世界成就品，兩品共一卷；",
        "from": "T36n1743_001:1064c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五華藏世界品，三卷；",
        "from": "T36n1743_001:1064c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六毘盧遮那品，一卷。",
        "from": "T36n1743_001:1064c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二普光明殿會，經六品：",
        "from": "T36n1743_001:1064c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七如來名號品、八四聖諦品，兩品共一卷；",
        "from": "T36n1743_001:1065a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九光明覺品、十菩薩問明品，兩品共一卷；",
        "from": "T36n1743_001:1065a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一淨行品、十二賢首品，兩品共二卷。",
        "from": "T36n1743_001:1065a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三須彌山頂會，經六品：",
        "from": "T36n1743_001:1065a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三昇須彌山頂品、十四須彌頂上偈讚品、十五十住品，三品共一卷；",
        "from": "T36n1743_001:1065a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六梵行品、十七初發心功德品，兩品共一卷；",
        "from": "T36n1743_001:1065a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八明法品，一卷。",
        "from": "T36n1743_001:1065a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四夜摩天宮會，經四品：",
        "from": "T36n1743_001:1065a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九昇夜摩天宮品、二十夜摩宮中偈讚品、二十一十行品，三品共二卷；",
        "from": "T36n1743_001:1065a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十二十無盡藏品，一卷。",
        "from": "T36n1743_001:1065a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五兜率天宮會，經三品：",
        "from": "T36n1743_001:1065a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十三昇兜率天宮品，一卷；",
        "from": "T36n1743_001:1065a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十四兜率宮中偈讚品、二十五十迴向品，兩品共十一卷。",
        "from": "T36n1743_001:1065a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六他化自在天會，經一品：",
        "from": "T36n1743_001:1065a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十六十地品，六卷。",
        "from": "T36n1743_001:1065a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七重普光明殿會，經十一品：",
        "from": "T36n1743_001:1065a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十七十定品，四卷；",
        "from": "T36n1743_001:1065a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八十通品、二十九十忍品，兩品共一卷；",
        "from": "T36n1743_001:1065a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十阿僧祇品、三十一如來壽量品、三十二諸菩薩住處品、三品共一卷；",
        "from": "T36n1743_001:1065a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十三佛不思議法品，兩卷；",
        "from": "T36n1743_001:1065a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十四如來十身相海品、三十五如來隨好光明功德品，兩品共一卷；",
        "from": "T36n1743_001:1065a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十六普賢行品，一卷；",
        "from": "T36n1743_001:1065a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十七如來出現品，三卷。",
        "from": "T36n1743_001:1065a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八再重普光明殿會，經一品：",
        "from": "T36n1743_001:1065a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十八離世間品，七卷。",
        "from": "T36n1743_001:1065a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九逝多林會，經一品：",
        "from": "T36n1743_001:1065a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十九入法界品，二十一卷。",
        "from": "T36n1743_001:1065a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "題云大方廣佛華嚴者，大方廣，法也；",
        "from": "T36n1743_001:1065a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛華嚴，人也。",
        "from": "T36n1743_001:1065a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又大以體遍為義，方廣用周得名，依體起用名大廣。",
        "from": "T36n1743_001:1065a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛者，證說之人。",
        "from": "T36n1743_001:1065a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴，修因嚴果。",
        "from": "T36n1743_001:1065a26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經詮彼義，故云大方廣佛華嚴經。",
        "from": "T36n1743_001:1065a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經總七處、九會，三十九品，共八十卷。",
        "from": "T36n1743_001:1065a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初會在菩提場阿蘭若法。",
        "from": "T36n1743_001:1065a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經有六品，明佛果德。",
        "from": "T36n1743_001:1065b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那初成正覺，十方眾主如大自在天王并菩薩等，共四十眾同類眷屬，各剎塵數，咸至會中，故有世主妙嚴品。",
        "from": "T36n1743_001:1065b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海會既集，佛現真儀，則有如來相品。",
        "from": "T36n1743_001:1065b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真相離相，非小菩薩之所能觀，故普賢大士入自在定、證佛境界，則有普賢三昧品。",
        "from": "T36n1743_001:1065b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛有依報，就依報中先辨能具因緣，則有世界成就品。",
        "from": "T36n1743_001:1065b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明所依剎海，則有華藏世界品。",
        "from": "T36n1743_001:1065b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依報既彰，宏麗正果屬在尊嚴，故有毘盧遮那品，又此第一會，為信樂之境。",
        "from": "T36n1743_001:1065b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二會不離菩提場，受龍宮請，名普光明殿會。",
        "from": "T36n1743_001:1065b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經有六品，辨信者之心。",
        "from": "T36n1743_001:1065b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛應眾生，先現三業：",
        "from": "T36n1743_001:1065b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約身業以立稱，則有如來名號品；",
        "from": "T36n1743_001:1065b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約語業以闡教，則有四聖諦品；",
        "from": "T36n1743_001:1065b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約意業以警眾，則有光明覺品。",
        "from": "T36n1743_001:1065b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生正信，先須正解，故有菩薩問明品。",
        "from": "T36n1743_001:1065b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解而不行，如說食求飽足。",
        "from": "T36n1743_001:1065b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以立行以解解，故有淨行品。",
        "from": "T36n1743_001:1065b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因行以成德之為眾善之元，故有賢首品。",
        "from": "T36n1743_001:1065b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第二會雖明正信，未立慧根，如彼輕毛隨風無定。",
        "from": "T36n1743_001:1065b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三不離菩提場，受天王請，昇忉利天宮會。",
        "from": "T36n1743_001:1065b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經有六品，生正慧根。",
        "from": "T36n1743_001:1065b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昇忉利天宮，化主赴眾。",
        "from": "T36n1743_001:1065b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忉利天宮偈讚品，助化讚德。",
        "from": "T36n1743_001:1065b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之二品，當會由常。",
        "from": "T36n1743_001:1065b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十住品，辨住中之解；",
        "from": "T36n1743_001:1065b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵行品，明住中之行；",
        "from": "T36n1743_001:1065b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心功德品，彰住中之德。",
        "from": "T36n1743_001:1065b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之三品，當會正說。",
        "from": "T36n1743_001:1065b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明法一品，當會□進。",
        "from": "T36n1743_001:1065b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此會，正慧既明。",
        "from": "T36n1743_001:1065b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四不起菩提場，昇夜摩天宮會。",
        "from": "T36n1743_001:1065b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經有四品，託彼慧根，生其正行。",
        "from": "T36n1743_001:1065b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昇夜摩天宮品，應物合如。",
        "from": "T36n1743_001:1065b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜摩宮中偈讚品，德無不備。",
        "from": "T36n1743_001:1065b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之二品，當會興彼。",
        "from": "T36n1743_001:1065c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十行品，正辨成行。",
        "from": "T36n1743_001:1065c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十無盡藏品，攝行進。",
        "from": "T36n1743_001:1065c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此後會雖立根莖，而枝葉未布。",
        "from": "T36n1743_001:1065c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五不起菩提場，昇兜率天宮會。",
        "from": "T36n1743_001:1065c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經有三品，明迴向願，遍眾生界普蔭無唯。",
        "from": "T36n1743_001:1065c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昇兜率天宮品，明於佛有感必□。",
        "from": "T36n1743_001:1065c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兜率宮中偈讚品，表於眾無德不稱。",
        "from": "T36n1743_001:1065c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十迴向品，即當會正說。",
        "from": "T36n1743_001:1065c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言迴向者，迴自向他、迴小向大、迴事向理。",
        "from": "T36n1743_001:1065c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由三迴向，證彼三身。",
        "from": "T36n1743_001:1065c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前□五會，住極三賢。",
        "from": "T36n1743_001:1065c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六不動菩提場，應他化自在天宮會。",
        "from": "T36n1743_001:1065c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經有一品，登於十聖，明十地住。",
        "from": "T36n1743_001:1065c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又賢者善也，聖者正也。",
        "from": "T36n1743_001:1065c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言三者，十住為下賢，約慧斷惠以標名；",
        "from": "T36n1743_001:1065c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十行為中賢，約修進善以立稱；",
        "from": "T36n1743_001:1065c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十迴向為上賢，約自利利他為勝願。",
        "from": "T36n1743_001:1065c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有三賢矣。",
        "from": "T36n1743_001:1065c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然地有生成之義，表此無漏聖智能生菩薩成佛果德，故如地也。",
        "from": "T36n1743_001:1065c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "背凡登聖，斷障證真，創生佛家，故名歡喜。",
        "from": "T36n1743_001:1065c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二離垢地者，淨修三業，如火鍊金，離誤犯戒垢，故名離垢。",
        "from": "T36n1743_001:1065c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三發光地者，修證禪定，能現神通，發妙慧光，故名發光。",
        "from": "T36n1743_001:1065c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四焰慧者，定能起慧，以三十七品無漏慧火燒煩惱薪，故名焰慧。",
        "from": "T36n1743_001:1065c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五難勝地者，真俗二智，行相牙違，合令相應，故名難勝。",
        "from": "T36n1743_001:1065c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六現前地者，般若正智，了十二因緣，拔無明根、入三解脫，法空真理明現在前，故名現前。",
        "from": "T36n1743_001:1065c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七遠行地者，常住三昧，不礙起用，出過有無，下位莫測。",
        "from": "T36n1743_001:1065c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前之六地，人天二乘猶許共行；",
        "from": "T36n1743_001:1065c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此獨起，故之遠行。",
        "from": "T36n1743_001:1065c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八不動地者，證無生忍，不為相用功行所動。",
        "from": "T36n1743_001:1065c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙佛七勸，因起十身相作及十自在，法駛流中任運而轉不假作意，故名不動。",
        "from": "T36n1743_001:1065c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九善慧地者，前證法體，今此起用，專學法王宴寢語默，具四十無礙辨之眾生相，為大法師，無求不應，故名善慧。",
        "from": "T36n1743_001:1066a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十法雲地者，大法智雲能隔塵惑，諸佛法雨悉能受為，復以法雨遍屬群品，故名法雲。",
        "from": "T36n1743_001:1066a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又初二三地同人天行，四五六地同二乘行，第七一地同大乘行，八九十地入一乘行，故有十聖矣。",
        "from": "T36n1743_001:1066a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七不動菩提場，重會普光明殿，經有十一品。",
        "from": "T36n1743_001:1066a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前明三賢十聖，行位將終，今此因圓果滿也。",
        "from": "T36n1743_001:1066a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十定品，修十三昧，證有即非有。",
        "from": "T36n1743_001:1066a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十通品，十慧發明，知空即不空。",
        "from": "T36n1743_001:1066a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十忍品，定慧均平，空有一貫。",
        "from": "T36n1743_001:1066a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇品，能數既多，算不可及，明之德廣也。",
        "from": "T36n1743_001:1066a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來壽量品，竪窮來際。",
        "from": "T36n1743_001:1066a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩住處品，橫遍十方。",
        "from": "T36n1743_001:1066a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此上六品，並是菩薩地位功德，即等覺因，成下之五，文理雙融，妙覺果滿，將成妙覺，先證妙法，故有佛不思議法品。",
        "from": "T36n1743_001:1066a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙法既立，必成妙身，故有十身相海品。",
        "from": "T36n1743_001:1066a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大相既成，次明好德，則有隨好光明功德品。",
        "from": "T36n1743_001:1066a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "津梁既備，濟渡為功，益物無偏，則有普賢行品。",
        "from": "T36n1743_001:1066a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢在心，須呈果相，則有如來出現品。",
        "from": "T36n1743_001:1066a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八不離前處，再會普光明殿，經有一品，名離世間。",
        "from": "T36n1743_001:1066a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂前七會以差別法而生其解，當會約仗解成圓融行，所以普慧菩薩起二百問，普賢菩薩二千行答。",
        "from": "T36n1743_001:1066a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖修諸行之法，無性非相，既遷恒在世間，名離世間。",
        "from": "T36n1743_001:1066a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九不動寂滅道場，而現逝多林會，經有一品，名入法界。",
        "from": "T36n1743_001:1066a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂前離世間，今入法界，明證也。",
        "from": "T36n1743_001:1066a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛入師子頻申三昧，欲令大眾頓證普門故。",
        "from": "T36n1743_001:1066a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以文殊大士出善住閣，行化南方，於福城東古佛塔所，會進多眾。",
        "from": "T36n1743_001:1066a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心，唯有善財童子，歷一百一十城，遇善知識，各得三昧解脫門。",
        "from": "T36n1743_001:1066b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終至普賢菩薩，於一一毛端頓證解脫，含同果海。",
        "from": "T36n1743_001:1066b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此九會，第一會舉所信之佛；",
        "from": "T36n1743_001:1066b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二會能信之心；",
        "from": "T36n1743_001:1066b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三會依信生解；",
        "from": "T36n1743_001:1066b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四會依解起行；",
        "from": "T36n1743_001:1066b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五會依行發願；",
        "from": "T36n1743_001:1066b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六會三賢位極，聖地將登；",
        "from": "T36n1743_001:1066b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七會中攝因成果；",
        "from": "T36n1743_001:1066b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八會有無雙泯，非真妄之可分；",
        "from": "T36n1743_001:1066b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九會境智一如，豈筌蹄之所及。",
        "from": "T36n1743_001:1066b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又總言之，初會舉依正兩報為所信佛，第九會明其信者能成佛人，則初末兩會合是一義，則題中佛字也。",
        "from": "T36n1743_001:1066b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從第二會至第八會，則彼佛因，則題中華字也。",
        "from": "T36n1743_001:1066b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因有階降，故中七會以則之；",
        "from": "T36n1743_001:1066b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果無分限，唯一佛以證之。",
        "from": "T36n1743_001:1066b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴者，以願行之華因，嚴彼法身之佛果也。",
        "from": "T36n1743_001:1066b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又佛華嚴是能傳法之人，大方廣是所傳教之法，以法成人，先云大方廣也；",
        "from": "T36n1743_001:1066b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以人傳法，故云佛華嚴也。",
        "from": "T36n1743_001:1066b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中攝因成果，唯佛也；",
        "from": "T36n1743_001:1066b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法中攝用歸體，唯大也。",
        "from": "T36n1743_001:1066b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大是所證之法界，佛是能證之大智，佛之與大如光空，空外無光、大外無佛，空光一體，佛冥契不可分也。",
        "from": "T36n1743_001:1066b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心緣莫到、言說不及，能詮此義，故以為經。",
        "from": "T36n1743_001:1066b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此乃因理故成教，因教以見理。",
        "from": "T36n1743_001:1066b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云「如因日光照，還見於日輪。",
        "from": "T36n1743_001:1066b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因佛智慧光，見佛所行道。",
        "from": "T36n1743_001:1066b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」以佛常故，經法亦常。",
        "from": "T36n1743_001:1066b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以然者，未曾有日捨於光明。",
        "from": "T36n1743_001:1066b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云「閻浮提人，隔須彌山，見日出沒。",
        "from": "T36n1743_001:1066b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日中住者，常隨於日，無有出沒。",
        "from": "T36n1743_001:1066b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」凡隔無明，見佛隱現；",
        "from": "T36n1743_001:1066b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大菩薩常隨於佛，無有隱現。",
        "from": "T36n1743_001:1066b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日輪是體，光明為用，未曾有體而不具用。",
        "from": "T36n1743_001:1066b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由有光用，行者見道，所作成辦。",
        "from": "T36n1743_001:1066b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法亦爾，則體，演法為用，未曾有佛而不說經。",
        "from": "T36n1743_001:1066b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由聞思法，知出離道，修戒定慧，悉得成就。",
        "from": "T36n1743_001:1066c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云「如有大經卷，量等三千界，在於一塵內，一切塵亦然。",
        "from": "T36n1743_001:1066c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一聰慧人，淨眼普明見，破塵出經卷，廣饒益眾生。",
        "from": "T36n1743_001:1066c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」故云大方廣佛華嚴經。",
        "from": "T36n1743_001:1066c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但文義深，難可備陳，隨分見聞，濫為稱讚。",
        "from": "T36n1743_001:1066c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儻一句一偈與理相應，伏願福祐無疆，上資聖壽。",
        "from": "T36n1743_001:1066c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞元八年四月二十一日安國寺沙門靜居進上辛酉秋七月初三日依高山寺古藏內所傳本書寫之，初六日一校畢。",
        "from": "T36n1743_001:1066c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　西山梅村住菴善妙寺道棟書",
        "from": "T36n1743_001:1066c12_0",
        "context_with_next_sentence": true
    }
]