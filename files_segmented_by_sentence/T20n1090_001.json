[
    {
        "source_sentence": "佛說如意輪蓮華心如來修行觀",
        "from": "T20n1090_001:0220a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門儀",
        "from": "T20n1090_001:0220a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋大契丹國師中天竺摩竭陀國",
        "from": "T20n1090_001:0220a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時薄伽梵　　與諸大菩薩",
        "from": "T20n1090_001:0220a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在須彌山頂　　為諸有情等",
        "from": "T20n1090_001:0220a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演說如意輪　　修行祕密法",
        "from": "T20n1090_001:0220a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言此蓮華　　摩尼如意輪",
        "from": "T20n1090_001:0220a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛王如來　　具無量無邊",
        "from": "T20n1090_001:0220b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大不思議行　　威德最勝力",
        "from": "T20n1090_001:0220b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏一切魔　　眾惡不能入",
        "from": "T20n1090_001:0220b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等應善聽　　我今廣分別",
        "from": "T20n1090_001:0220b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於後末世中　　若有求法者",
        "from": "T20n1090_001:0220b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先禮阿闍梨　　受三種灌頂",
        "from": "T20n1090_001:0220b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先聽受諸法　　令根性純熟",
        "from": "T20n1090_001:0220b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟白阿闍梨　　次第方傳受",
        "from": "T20n1090_001:0220b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意輪心法　　弟子受法竟",
        "from": "T20n1090_001:0220b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當發志誠心　　香華及燈明",
        "from": "T20n1090_001:0220b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香飲食等　　先供養諸佛",
        "from": "T20n1090_001:0220b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法供養已　　口中含於寶",
        "from": "T20n1090_001:0220b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想告求諸佛　　願於此法門",
        "from": "T20n1090_001:0220b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得速成就　　即結輪壇印",
        "from": "T20n1090_001:0220b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽先旋舞　　後背交十度",
        "from": "T20n1090_001:0220b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋轉至頂散　　由結此印已",
        "from": "T20n1090_001:0220b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍通一切壇　　悉能入密言",
        "from": "T20n1090_001:0220b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結三昧耶　　蓮華祕密印",
        "from": "T20n1090_001:0220b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽而相合　　進力禪智度",
        "from": "T20n1090_001:0220b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈如初開蓮　　名為如意輪",
        "from": "T20n1090_001:0220b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華三昧印　　三昧真言曰",
        "from": "T20n1090_001:0220b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結前三昧耶　　及誦此真言",
        "from": "T20n1090_001:0220c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自身頂上　　五方及四隅",
        "from": "T20n1090_001:0220c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持於九位　　次加持六根",
        "from": "T20n1090_001:0220c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與兩膝上　　至額而散印",
        "from": "T20n1090_001:0220c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結召請印　　二羽金剛拳",
        "from": "T20n1090_001:0220c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒方進力度　　背交而相鉤",
        "from": "T20n1090_001:0220c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智押忍願　　以進力二度",
        "from": "T20n1090_001:0220c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往上方來去　　鉤請諸聖眾",
        "from": "T20n1090_001:0220c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請已作旋舞　　二羽合如蓮",
        "from": "T20n1090_001:0220c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言已　　當於作法前",
        "from": "T20n1090_001:0220c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先入於河中　　應取身前面",
        "from": "T20n1090_001:0220c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與右邊土　　安於左手中",
        "from": "T20n1090_001:0220c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捏作自身形　　以手於面前",
        "from": "T20n1090_001:0220c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三遶自己身　　當以眼視之",
        "from": "T20n1090_001:0220c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想身口意業　　及與六垢觸",
        "from": "T20n1090_001:0220c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入彼泥身中　　當往隱密處",
        "from": "T20n1090_001:0220c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法而擲之　　以自己二手",
        "from": "T20n1090_001:0220c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於隱密處　　用水淨九遍",
        "from": "T20n1090_001:0220c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後用澡豆　　淨洗於二手",
        "from": "T20n1090_001:0220c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手掬水　　想沐浴於佛",
        "from": "T20n1090_001:0220c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸菩薩眾　　并法阿闍梨",
        "from": "T20n1090_001:0220c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三獻而用之　　二手再掬水",
        "from": "T20n1090_001:0220c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手母指間　　傾下掌中水",
        "from": "T20n1090_001:0220c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗浴於父母　　當九遍浴之",
        "from": "T20n1090_001:0220c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當淨洗己身　　最後以右手",
        "from": "T20n1090_001:0221a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取水灌頂上　　當想自己身",
        "from": "T20n1090_001:0221a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外皆清淨　　如上洗浴已",
        "from": "T20n1090_001:0221a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於壇門首　　當於壇門外",
        "from": "T20n1090_001:0221a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用水先洗足　　次應洗二手",
        "from": "T20n1090_001:0221a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手仰如器　　以右手戒度",
        "from": "T20n1090_001:0221a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈戒安於掌　　取水傾掌內",
        "from": "T20n1090_001:0221a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三吸掌中水　　想三業清淨",
        "from": "T20n1090_001:0221a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次用於淨水　　向壇門內灑",
        "from": "T20n1090_001:0221a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表為淨壇法　　當誦本真言",
        "from": "T20n1090_001:0221a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持於淨水　　淨水真言曰",
        "from": "T20n1090_001:0221a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言已　　想內外清淨",
        "from": "T20n1090_001:0221a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應請十方　　一切佛菩薩",
        "from": "T20n1090_001:0221a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應次諦思惟　　內心想普請",
        "from": "T20n1090_001:0221a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當五體投地　　想禮諸聖眾",
        "from": "T20n1090_001:0221a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此告召已　　內想辦諸事",
        "from": "T20n1090_001:0221a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當更作法　　用水灑壇中",
        "from": "T20n1090_001:0221a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方及四隅　　壇中所用物",
        "from": "T20n1090_001:0221a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑淨令清淨　　行者次應想",
        "from": "T20n1090_001:0221a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明寶樓閣　　復想金蓮華",
        "from": "T20n1090_001:0221a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想華令寬廣　　四面悉平正",
        "from": "T20n1090_001:0221a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想成寶閣基真言曰。",
        "from": "T20n1090_001:0221b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者次應想　　樓閣基四面",
        "from": "T20n1090_001:0221b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復想於海　　其水變為乳",
        "from": "T20n1090_001:0221b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想乳海中　　金色蓮華上",
        "from": "T20n1090_001:0221b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想安四角地　　上安須彌山",
        "from": "T20n1090_001:0221b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八角令方正　　上想寶樓閣",
        "from": "T20n1090_001:0221b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種寶莊嚴　　不動真言曰",
        "from": "T20n1090_001:0221b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想寶樓閣　　層級皆嚴飾",
        "from": "T20n1090_001:0221b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面安四門　　置種種瓔珞",
        "from": "T20n1090_001:0221b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與七寶蓋　　安於樓閣中",
        "from": "T20n1090_001:0221b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以摩尼珠　　而砌成窓牖",
        "from": "T20n1090_001:0221b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次用雜寶珠　　貫串懸周匝",
        "from": "T20n1090_001:0221b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸寶類　　悉放種種光",
        "from": "T20n1090_001:0221b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍皆供養　　十方諸如來",
        "from": "T20n1090_001:0221b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸菩薩眾　　供養真言曰",
        "from": "T20n1090_001:0221b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心供養已　　當於寶樓閣",
        "from": "T20n1090_001:0221b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先布於黃金　　上想師子壇",
        "from": "T20n1090_001:0221b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上安寶蓮華　　莖葉有鬚蘂",
        "from": "T20n1090_001:0221b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華葉具六色　　當於華葉中",
        "from": "T20n1090_001:0221b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用百千寶珠　　間雜而嚴飾",
        "from": "T20n1090_001:0221b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中師子壇　　外想百千種",
        "from": "T20n1090_001:0221b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華師子壇　　周匝而圍遶",
        "from": "T20n1090_001:0221b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴悉具足　　蓮華真言曰",
        "from": "T20n1090_001:0221c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言運想　　如法布置已",
        "from": "T20n1090_001:0221c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而用於寶器　　滿中盛七寶",
        "from": "T20n1090_001:0221c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五穀香華等　　想於聖眾前",
        "from": "T20n1090_001:0221c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右足散奉施　　而伸於禮敬",
        "from": "T20n1090_001:0221c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蘇佉嚩底　　運心請聖眾",
        "from": "T20n1090_001:0221c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與觀自在　　菩薩之眷屬",
        "from": "T20n1090_001:0221c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心普奉請　　下降於壇中",
        "from": "T20n1090_001:0221c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於聖眾前　　置種種香華",
        "from": "T20n1090_001:0221c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白拂幢旛蓋　　伎樂與燈明",
        "from": "T20n1090_001:0221c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前迎諸聖眾　　慈悲來降赴",
        "from": "T20n1090_001:0221c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉施印　　二羽戒方交",
        "from": "T20n1090_001:0221c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧並直竪　　忍願進力度",
        "from": "T20n1090_001:0221c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微曲如蓮葉　　禪智二微曲",
        "from": "T20n1090_001:0221c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結請召印　　二羽戒方度",
        "from": "T20n1090_001:0221c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交背而相鉤　　禪智押忍願",
        "from": "T20n1090_001:0221c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力來去鉤　　請召真言曰",
        "from": "T20n1090_001:0221c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上迎請已　　奉請聖眾坐",
        "from": "T20n1090_001:0221c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉座印　　二羽禪智曲",
        "from": "T20n1090_001:0222a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒方微曲開　　餘度並開散",
        "from": "T20n1090_001:0222a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想洗佛足　　洗足真言曰",
        "from": "T20n1090_001:0222a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸聖眾　　想皆洗足已",
        "from": "T20n1090_001:0222a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有諸供養　　平等而奉獻",
        "from": "T20n1090_001:0222a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結普供養　　平等圓滿印",
        "from": "T20n1090_001:0222a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右羽戒忍進　　三度並直竪",
        "from": "T20n1090_001:0222a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈禪度押檀　　當安於胸側",
        "from": "T20n1090_001:0222a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左羽仰安心　　想捧供養物",
        "from": "T20n1090_001:0222a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心普供養　　十方諸如來",
        "from": "T20n1090_001:0222a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸聖眾　　供養真言曰",
        "from": "T20n1090_001:0222a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結如意寶印　　二羽金剛拳",
        "from": "T20n1090_001:0222a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力背相鉤　　心想如寶形",
        "from": "T20n1090_001:0222a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力而掣開　　如意輪心寶",
        "from": "T20n1090_001:0222a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1090_001:0222a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以如意輪　　蓮華心寶印",
        "from": "T20n1090_001:0222a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持於五處　　所謂頂及額",
        "from": "T20n1090_001:0222a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喉心與兩肩　　用印而加持",
        "from": "T20n1090_001:0222a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當想此五處　　安諸聖眾位",
        "from": "T20n1090_001:0222a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三誦本真言　　次以心寶印",
        "from": "T20n1090_001:0222b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當欄界四方　　及四隅上下",
        "from": "T20n1090_001:0222b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內想成欄界　　欄界真言曰",
        "from": "T20n1090_001:0222b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印誦真言　　內外成欄界",
        "from": "T20n1090_001:0222b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次念甲冑明　　當護自己身",
        "from": "T20n1090_001:0222b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上加持已　　結金剛橛印",
        "from": "T20n1090_001:0222b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽內相叉　　進力拄直竪",
        "from": "T20n1090_001:0222b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智並相合　　當用於此印",
        "from": "T20n1090_001:0222b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先加持護身　　念前甲冑明",
        "from": "T20n1090_001:0222b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持護身已　　用印當擬地",
        "from": "T20n1090_001:0222b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內想如釘橛　　用印而右轉",
        "from": "T20n1090_001:0222b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想結壇界　　想如金剛城",
        "from": "T20n1090_001:0222b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外令堅固　　如法運想已",
        "from": "T20n1090_001:0222b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者應志誠　　以五種供養",
        "from": "T20n1090_001:0222b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奔獻諸聖眾　　願垂哀納受",
        "from": "T20n1090_001:0222b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先結塗香印　　二羽先旋舞",
        "from": "T20n1090_001:0222b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智二度交　　餘八度直竪",
        "from": "T20n1090_001:0222b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向外而塗拭　　想塗聖眾足",
        "from": "T20n1090_001:0222b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩拭佛胸臆　　塗香真言曰",
        "from": "T20n1090_001:0222b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結散華印　　二羽頭相拄",
        "from": "T20n1090_001:0222b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形如掬物勢　　想華安佛頂",
        "from": "T20n1090_001:0222c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結燒香印　　二羽仰相叉",
        "from": "T20n1090_001:0222c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍度而直竪　　燒香真言曰",
        "from": "T20n1090_001:0222c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結燃燈印　　二羽仰相叉",
        "from": "T20n1090_001:0222c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願頭相交　　禪智當安於",
        "from": "T20n1090_001:0222c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願二度側　　燈明真言曰",
        "from": "T20n1090_001:0222c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結飲食印　　二羽戒方度",
        "from": "T20n1090_001:0222c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二度頭相拄　　餘度頭微曲",
        "from": "T20n1090_001:0222c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如捧飯勢　　佛飯真言曰",
        "from": "T20n1090_001:0222c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是供養已　　行者應志心",
        "from": "T20n1090_001:0222c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內想普供養　　十方諸聖眾",
        "from": "T20n1090_001:0222c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言供養已　　額想禮八身",
        "from": "T20n1090_001:0222c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂頂上五方　　及額口心等",
        "from": "T20n1090_001:0222c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當志誠想禮　　禮佛真言曰",
        "from": "T20n1090_001:0222c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮敬聖眾已　　當捨自己身",
        "from": "T20n1090_001:0223a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想為寶樓閣　　當於內心上",
        "from": "T20n1090_001:0223a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想蓮華金剛　　上安日月輪",
        "from": "T20n1090_001:0223a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上想真如體　　當凝然湛寂",
        "from": "T20n1090_001:0223a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於月輪中　　次於月輪上",
        "from": "T20n1090_001:0223a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想如意輪　　蓮華王如來",
        "from": "T20n1090_001:0223a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端然住而座　　運想應一心",
        "from": "T20n1090_001:0223a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿生於散亂　　當告白聖眾",
        "from": "T20n1090_001:0223a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂大悲心　　示我方便行",
        "from": "T20n1090_001:0223a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所作勝事　　施一切有情",
        "from": "T20n1090_001:0223a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉令登正覺　　告白聖眾已",
        "from": "T20n1090_001:0223a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於輪王心　　內想安月輪",
        "from": "T20n1090_001:0223a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月上想吽字　　形如大麥量",
        "from": "T20n1090_001:0223a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍有光明　　普遍十方界",
        "from": "T20n1090_001:0223a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此吽字已　　次應想吽字",
        "from": "T20n1090_001:0223a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化為六色光　　當於此光中",
        "from": "T20n1090_001:0223a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變為六菩薩　　各執供養物",
        "from": "T20n1090_001:0223a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿三千界　　普供養諸佛",
        "from": "T20n1090_001:0223a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世薄伽梵　　化光供養已",
        "from": "T20n1090_001:0223a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復收攝吽字　　還歸心月輪",
        "from": "T20n1090_001:0223a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於吽字上　　復變月輪壇",
        "from": "T20n1090_001:0223a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華臥金剛　　如前日月輪",
        "from": "T20n1090_001:0223a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與前師子壇　　嚴飾皆無異",
        "from": "T20n1090_001:0223a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上想如意輪　　大蓮華如來",
        "from": "T20n1090_001:0223a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀貌黃金色　　右手當捧持",
        "from": "T20n1090_001:0223b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意摩尼寶　　左手當執持",
        "from": "T20n1090_001:0223b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金色大蓮華　　身掛上妙衣",
        "from": "T20n1090_001:0223b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以摩尼寶珠　　貫串為瓔珞",
        "from": "T20n1090_001:0223b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結如意輪　　摩尼根本印",
        "from": "T20n1090_001:0223b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽先合掌　　進力屈如寶",
        "from": "T20n1090_001:0223b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願申如針　　檀慧戒方度",
        "from": "T20n1090_001:0223b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當直竪散開　　禪智並微曲",
        "from": "T20n1090_001:0223b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想如開敷蓮　　而誦根本明",
        "from": "T20n1090_001:0223b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1090_001:0223b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復結心印　　二羽六度頭",
        "from": "T20n1090_001:0223b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各安指罅內　　進力二度屈",
        "from": "T20n1090_001:0223b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭相去半寸　　禪智而開竪",
        "from": "T20n1090_001:0223b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形如初開蓮　　復當想此印",
        "from": "T20n1090_001:0223b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心內而安置　　心真言曰",
        "from": "T20n1090_001:0223b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結心中心印　　二羽禪智屈",
        "from": "T20n1090_001:0223b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指面令相合　　餘八度直竪",
        "from": "T20n1090_001:0223b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "低印而向下　　想安心印上",
        "from": "T20n1090_001:0223b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是於己身　　運心安布已",
        "from": "T20n1090_001:0223b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意輪心法　　及心中心印",
        "from": "T20n1090_001:0223c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於心中心　　化出骨嚕二合馱",
        "from": "T20n1090_001:0223c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為如意輪　　蓮華心明王",
        "from": "T20n1090_001:0223c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其狀淡紅色　　串華為瓔珞",
        "from": "T20n1090_001:0223c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種而嚴飾　　右手把鉤杖",
        "from": "T20n1090_001:0223c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持羂索　　佛前右邊立",
        "from": "T20n1090_001:0223c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白言世尊　　願佛當教勅",
        "from": "T20n1090_001:0223c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我作諸事　　次於佛左邊",
        "from": "T20n1090_001:0223c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想佛數珠母　　左膝胡跪坐",
        "from": "T20n1090_001:0223c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形狀赤白色　　頸掛於數珠",
        "from": "T20n1090_001:0223c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手如捻珠　　狀同持課勢",
        "from": "T20n1090_001:0223c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "部母表為身明王表為力　　數珠身真言",
        "from": "T20n1090_001:0223c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言已　　貫串於八識",
        "from": "T20n1090_001:0223c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手捧數珠　　先當頂上禮",
        "from": "T20n1090_001:0223c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言加持已　　復當於心上",
        "from": "T20n1090_001:0223c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想安置月壇　　上安於數珠",
        "from": "T20n1090_001:0223c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想珠如佛母　　明王及真言",
        "from": "T20n1090_001:0223c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合一無有異　　凡於持課時",
        "from": "T20n1090_001:0223c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於佛左邊　　先想數珠母",
        "from": "T20n1090_001:0223c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在月輪上坐　　內心伸禮敬",
        "from": "T20n1090_001:0223c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七遍誦真言　　如是運想已",
        "from": "T20n1090_001:0223c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更復內心想　　香華及燈明",
        "from": "T20n1090_001:0223c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心再供養　　如意輪如來",
        "from": "T20n1090_001:0223c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及佛母明王　　次誦佛母名",
        "from": "T20n1090_001:0223c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持法事已　　內心再供養",
        "from": "T20n1090_001:0224a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛聖眾　　告召伸禮敬",
        "from": "T20n1090_001:0224a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結前蓮華印　　二羽如開蓮",
        "from": "T20n1090_001:0224a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想捧諸聖眾　　還歸於本位",
        "from": "T20n1090_001:0224a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此奉送明　　想諸佛聖眾",
        "from": "T20n1090_001:0224a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各歸於淨土　　奉送聖眾已",
        "from": "T20n1090_001:0224a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結解界印　　二羽戒方度",
        "from": "T20n1090_001:0224a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與進力指　　皆交而鉤結",
        "from": "T20n1090_001:0224a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智押忍願　　進力二度撥",
        "from": "T20n1090_001:0224a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想如開壇門　　左三遶成解",
        "from": "T20n1090_001:0224a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所用金剛橛　　及與欄界線",
        "from": "T20n1090_001:0224a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印皆收攝　　解界真言曰",
        "from": "T20n1090_001:0224a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印誦真言　　內外解界已",
        "from": "T20n1090_001:0224a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於奉送時　　復想諸聖眾",
        "from": "T20n1090_001:0224a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降於甘露水　　洗滌自己身",
        "from": "T20n1090_001:0224a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪業並消除　　內外皆清淨",
        "from": "T20n1090_001:0224a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告言行者　　汝勤修此法",
        "from": "T20n1090_001:0224a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫生於懈倦　　誦持勿間斷",
        "from": "T20n1090_001:0224a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當成就　　與佛等無異",
        "from": "T20n1090_001:0224a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說如意輪蓮華心如來修行觀門儀終",
        "from": "T20n1090_001:0224a28_100",
        "context_with_next_sentence": false
    }
]