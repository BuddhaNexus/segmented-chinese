[
    {
        "source_sentence": "勸善經一卷",
        "from": "T85n2916_001:1462a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅左丞相賈。恍頒下諸州善之眾生。每日念",
        "from": "T85n2916_001:1462a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛一千。口斷惡行善。今年大熱無人",
        "from": "T85n2916_001:1462a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收苅。",
        "from": "T85n2916_001:1462a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有數眾病死。",
        "from": "T85n2916_001:1462a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一虐病。",
        "from": "T85n2916_001:1462a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二天行病死。",
        "from": "T85n2916_001:1462a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三赤白痢病死。",
        "from": "T85n2916_001:1462a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四赤眼病死。",
        "from": "T85n2916_001:1462a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五人產病死。",
        "from": "T85n2916_001:1462a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六水痢病死。",
        "from": "T85n2916_001:1462a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七風病死。",
        "from": "T85n2916_001:1462a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今勸眾生寫此經免一門難。",
        "from": "T85n2916_001:1462a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫本六親。",
        "from": "T85n2916_001:1462a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見此經不寫者滅門。",
        "from": "T85n2916_001:1462a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門上傍之得過此難。",
        "from": "T85n2916_001:1462a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無福者不可得見此經。",
        "from": "T85n2916_001:1462a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其經從南來。",
        "from": "T85n2916_001:1462a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正月八日雷電霹靂。",
        "from": "T85n2916_001:1462a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空中有一童子。",
        "from": "T85n2916_001:1462a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年四歲。",
        "from": "T85n2916_001:1462a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又見一老人在路中。",
        "from": "T85n2916_001:1462a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一蛇身萬尺。",
        "from": "T85n2916_001:1462a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人頭鳥□遂呼老人曰。",
        "from": "T85n2916_001:1462a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為太山崩。",
        "from": "T85n2916_001:1462a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要女人萬萬眾須得片萬萬願著病難差。",
        "from": "T85n2916_001:1462a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫此經者得免此難。",
        "from": "T85n2916_001:1462a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信者但看四月一日三家使一牛五男同一婦僧尼巡門難。",
        "from": "T85n2916_001:1462a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫此經流傳聖人真言。",
        "from": "T85n2916_001:1462a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若袚𭂩風𪠴却不免難。",
        "from": "T85n2916_001:1462a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相勸阿彌陀佛不久見太平時。",
        "from": "T85n2916_001:1462a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸善經一卷",
        "from": "T85n2916_001:1462a20_100",
        "context_with_next_sentence": false
    }
]