[
    {
        "source_sentence": "聖者文殊師利發菩提心願文",
        "from": "T20n1198_001:0940a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巴看落目瓦傳",
        "from": "T20n1198_001:0940a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元甘泉馬蹄山中川守分真師",
        "from": "T20n1198_001:0940a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姪智慧譯敬禮一切諸佛菩薩。",
        "from": "T20n1198_001:0940a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救護一切面前住　　究竟發於菩提心",
        "from": "T20n1198_001:0940a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情作利益　　輪迴有情至彼岸",
        "from": "T20n1198_001:0940a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡心瞋心本自性　　慳貪貢高本自性",
        "from": "T20n1198_001:0940a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從今日至菩提　　未證中間不復造",
        "from": "T20n1198_001:0940a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡業貪瞋皆捨離　　制學依行恒歡喜",
        "from": "T20n1198_001:0940a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜正覺解所行　　自己恒時所修善",
        "from": "T20n1198_001:0940a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不取菩提之正路　　若一有情未出離",
        "from": "T20n1198_001:0940a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於暗劫恒化利　　無量不思議劫中",
        "from": "T20n1198_001:0940a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願常恒遊佛淨土　　某甲執名所作罪",
        "from": "T20n1198_001:0940a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方界中普皆聞　　自己身語之惡業",
        "from": "T20n1198_001:0940a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處恒清淨　　意中惡業亦清淨",
        "from": "T20n1198_001:0940a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊惡業不復造　聖者文殊師利往昔為啞馬國王時於雷音王佛處發此菩提心願文。",
        "from": "T20n1198_001:0940a21_28",
        "context_with_next_sentence": true
    }
]