[
    {
        "source_sentence": "施八方天儀則一卷",
        "from": "T21n1294_001:0378c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大興善寺翻經院灌頂阿闍梨述",
        "from": "T21n1294_001:0378c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡施八方天先辦所施飲食。五味雜粥稠煮",
        "from": "T21n1294_001:0378c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令稀。",
        "from": "T21n1294_001:0379a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五味者粳米菉豆油麻牛乳蘇。",
        "from": "T21n1294_001:0379a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各量多少。",
        "from": "T21n1294_001:0379a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以意令其有味。",
        "from": "T21n1294_001:0379a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著少許鹽切須護淨。",
        "from": "T21n1294_001:0379a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛於瓷盆。",
        "from": "T21n1294_001:0379a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小蠟燭十二枚磨白檀香。",
        "from": "T21n1294_001:0379a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時華清水於所施處。",
        "from": "T21n1294_001:0379a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八方各各塗一小壇。",
        "from": "T21n1294_001:0379a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小壇上先置淨椀。",
        "from": "T21n1294_001:0379a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其粥香華各各令人擎隨念誦人後。",
        "from": "T21n1294_001:0379a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦人先當至心啟請八方天王并其眷屬令赴道場各依本位先東方誦帝釋真言。",
        "from": "T21n1294_001:0379a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先洗清水少許即下塗香。",
        "from": "T21n1294_001:0379a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次下時華次下粥次蠟燭插於粥上次以燒香三度奉獻。",
        "from": "T21n1294_001:0379a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口誦真言兼求擁護。",
        "from": "T21n1294_001:0379a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞天王歡喜道場主福祐。",
        "from": "T21n1294_001:0379a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次東南方火天方亦爾。",
        "from": "T21n1294_001:0379a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦本天真言次第而施。",
        "from": "T21n1294_001:0379a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次南方焰魔天。",
        "from": "T21n1294_001:0379a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次西南方羅剎天。",
        "from": "T21n1294_001:0379a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次西方水天。",
        "from": "T21n1294_001:0379a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次西北方風天。",
        "from": "T21n1294_001:0379a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次北方多聞天。",
        "from": "T21n1294_001:0379a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次東北方伊舍那天末後留少許。",
        "from": "T21n1294_001:0379a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘粥多著清水。",
        "from": "T21n1294_001:0379a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於粥中著少餅子菓子塗香時華。",
        "from": "T21n1294_001:0379a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總著了。",
        "from": "T21n1294_001:0379a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦甘露真言。",
        "from": "T21n1294_001:0379a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手印加持。",
        "from": "T21n1294_001:0379a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令人擎送淨處瀉於地上施與諸惡鬼神。",
        "from": "T21n1294_001:0379a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願擁護施主歡喜。",
        "from": "T21n1294_001:0379a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更莫迴顧便須往還。",
        "from": "T21n1294_001:0379a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方帝釋天真言此真言總須加歸命。",
        "from": "T21n1294_001:0379a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􇩂唵􆿈印􈁋捺囉二合􄗱野􅁥娑嚩二合􄚩賀東南方火天真言􇩂唵􆿅阿􅍉疙曩二合􄗷曳􅁥娑嚩二合􄚩賀南方焰摩天真言􇩂唵􄗻焰􄗥摩􄗱野􅁥娑嚩二合􄚩賀西南方羅剎天真言􇩂唵􆯳乃理􄟝底曳二合􅁥娑嚩二合􄚩賀西方水天真言􇩂唵􄙖嚩􄙂嚕􄕋拏􄗱野􅁥娑嚩二合􄚩賀西北方風天真言􇩂唵􄙖嚩􄗱野􄙜吠微閉反􅁥娑嚩二合􄚩賀北方多聞天真言􇩂唵􄙝吠無背反􈃡室囉二合􄗥摩􄕋拏􄗱野􅁥娑嚩二合􄚩賀東北方伊舍那天真言􇩂唵􆿈伊􄙢舍􄖩那􄗱野􅁥娑嚩二合􄚩賀一一位各誦本真言。",
        "from": "T21n1294_001:0379b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分明記下物次第。",
        "from": "T21n1294_001:0379b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先水次塗香次華次粥次燭次燒香諸位遍已。",
        "from": "T21n1294_001:0379b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦須彌王真言。",
        "from": "T21n1294_001:0379b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持三七五七遍。",
        "from": "T21n1294_001:0379b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1294_001:0379b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􇩂唵􈂼蘇􄗫迷􄙂嚕􄑀羯􅛬蠟波二合􄗱野􇩂唵􈂼素􄙂嚕􈂼􄙂素嚕􄪼鉢囉二合􈂼素􄙂嚕􄪼鉢囉二合􈂼素􄙂嚕􅁥娑嚩二合􄚩賀總施了然後洗手。",
        "from": "T21n1294_001:0379b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又施道場中發遣奉送聖眾。",
        "from": "T21n1294_001:0379b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收却供養物。",
        "from": "T21n1294_001:0379b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後塗壇。",
        "from": "T21n1294_001:0379b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上方梵天真言如歸命􇩂唵􄭑沒囉二合􈃋憾摩二合􄖯寧寧頂反􅁥娑嚩二合􄚩賀下方地天真言􇩂唵􆱘必哩二合􄕥體地以反􄣅尾曳二合􅁥娑嚩二合􄚩賀水等六物各令一人手擎隨施者後。",
        "from": "T21n1294_001:0379c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施了者令於未施位處立。",
        "from": "T21n1294_001:0379c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是次第切須取之。",
        "from": "T21n1294_001:0379c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燭須在意。",
        "from": "T21n1294_001:0379c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未施遍已來不得令滅矣。",
        "from": "T21n1294_001:0379c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日天真言􇩂唵一􄙺娑􄚨賀􄭵薩囉二合􄑆計􄗽囉􄖳難二􈅼吽􄕛都􄙐隷三􅁥娑嚩二合􄚩賀月天真言􇩂唵一􄭵素􄗥麼二􄪼鉢囉二合􄗟陛􈅼吽三􅁥娑嚩二合􄚩賀甘露真言􄖩曩􄗭謨􈂼蘇􄙃嚕􄖵跛􄗱野一􄕗怛􄕤他引􄑘蘖􄕘多引􄗱野二􄕗怛􇩊儞也二合􄕤他􇩂唵􈂼蘇􄙂嚕􄪼鉢囉二合􈂼蘇􄙂嚕􈂼􄙂蘇嚕􅁥娑嚩二合􄚩賀施飲食真言􄖩曩􄗭謨􄙺薩􅞣嚩􄕗怛􄕤他引􄑘蘖􄕘多引􄙖嚩􄙒路􄑂枳􄕝帝􇩂唵􄗙婆􄗽囉􄗙􄗽婆囉􄚦三􄗙婆􄗽囉􄚦􄗙􄗽三婆囉􈅼吽若人求一切吉祥之事。",
        "from": "T21n1294_001:0379c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所建道場修畢之日初夜分。",
        "from": "T21n1294_001:0379c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆須先施八方天王及梵天地天諸宿曜鬼神等。",
        "from": "T21n1294_001:0380a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後發遣聖眾。",
        "from": "T21n1294_001:0380a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始廢道場如是依法作者。",
        "from": "T21n1294_001:0380a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切聖賢盡皆歡喜令得福祐。",
        "from": "T21n1294_001:0380a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲吉祥。",
        "from": "T21n1294_001:0380a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施八方天儀則唐院本無此題",
        "from": "T21n1294_001:0380a04_100",
        "context_with_next_sentence": false
    }
]