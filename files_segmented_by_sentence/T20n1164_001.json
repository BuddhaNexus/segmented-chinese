[
    {
        "source_sentence": "佛說大乘聖吉祥持世陀羅尼經",
        "from": "T20n1164_001:0669c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天中印度摩揭陀國那爛陀寺",
        "from": "T20n1164_001:0669c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教大師三藏賜紫沙門臣法天",
        "from": "T20n1164_001:0669c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉　詔譯如是我聞。",
        "from": "T20n1164_001:0669c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊。",
        "from": "T20n1164_001:0669c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在憍睒彌國大棘林中。",
        "from": "T20n1164_001:0669c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾四百五十人俱。",
        "from": "T20n1164_001:0669c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是眾所知識大阿羅漢。",
        "from": "T20n1164_001:0669c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸菩薩摩訶薩。",
        "from": "T20n1164_001:0669c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛法眾悉來集會。",
        "from": "T20n1164_001:0669c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬圍遶聽佛說法。",
        "from": "T20n1164_001:0669c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時會中有一長者名曰妙月。",
        "from": "T20n1164_001:0669c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於憍睒彌大城中住。",
        "from": "T20n1164_001:0669c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是長者有大智慧方便善巧。",
        "from": "T20n1164_001:0669c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男女眾多奴婢僕從眷屬圓滿。",
        "from": "T20n1164_001:0669c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆具善根發大善心。",
        "from": "T20n1164_001:0669c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時妙月長者。",
        "from": "T20n1164_001:0669c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往覲世尊到佛所已。",
        "from": "T20n1164_001:0669c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬合掌頂禮佛足。",
        "from": "T20n1164_001:0669c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復旋遶經百千匝。",
        "from": "T20n1164_001:0669c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退坐一面安詳坐已。",
        "from": "T20n1164_001:0669c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙月長者而白佛言。",
        "from": "T20n1164_001:0669c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我於今日。",
        "from": "T20n1164_001:0669c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲問如來應正等覺。",
        "from": "T20n1164_001:0669c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今心中而有疑事。",
        "from": "T20n1164_001:0669c28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊大慈無量為我。",
        "from": "T20n1164_001:0669c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法開我疑結。",
        "from": "T20n1164_001:0669c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦牟尼世尊。",
        "from": "T20n1164_001:0670a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告妙月長者言。",
        "from": "T20n1164_001:0670a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今恣汝所問心所疑事。",
        "from": "T20n1164_001:0670a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所疑不應懷蘊於自心中。",
        "from": "T20n1164_001:0670a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙月長者聞佛所說。",
        "from": "T20n1164_001:0670a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白佛言世尊。",
        "from": "T20n1164_001:0670a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T20n1164_001:0670a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多受貧窮。",
        "from": "T20n1164_001:0670a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何而得不受貧苦。",
        "from": "T20n1164_001:0670a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多疾病人。",
        "from": "T20n1164_001:0670a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何而得不受病惱。",
        "from": "T20n1164_001:0670a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊具一切智者。",
        "from": "T20n1164_001:0670a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告妙月長者言。",
        "from": "T20n1164_001:0670a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今何故唯為貧窮。",
        "from": "T20n1164_001:0670a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心懷疑惑而作是問。",
        "from": "T20n1164_001:0670a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙月長者白世尊言。",
        "from": "T20n1164_001:0670a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今貧窮世尊我今貧窮善逝。",
        "from": "T20n1164_001:0670a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為多眷屬男女婢僕居家充滿。",
        "from": "T20n1164_001:0670a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為我說。",
        "from": "T20n1164_001:0670a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊依我所問而為說法。",
        "from": "T20n1164_001:0670a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧窮眾生以何方便令離貧苦。",
        "from": "T20n1164_001:0670a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多病眾生以何方便令無病惱。",
        "from": "T20n1164_001:0670a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資生財寶粟麥等物。",
        "from": "T20n1164_001:0670a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何而得倉庫充滿。",
        "from": "T20n1164_001:0670a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何而得見所愛樂。",
        "from": "T20n1164_001:0670a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金銀摩尼真珠瑠璃。",
        "from": "T20n1164_001:0670a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "螺貝璧玉珊瑚硨磲。",
        "from": "T20n1164_001:0670a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛寶等庫藏盈溢。",
        "from": "T20n1164_001:0670a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我施之無有窮盡。",
        "from": "T20n1164_001:0670a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何而得居家眷屬。",
        "from": "T20n1164_001:0670a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男女大小尊貴自在。",
        "from": "T20n1164_001:0670a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙月長者作如是言白世尊已。",
        "from": "T20n1164_001:0670a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時。",
        "from": "T20n1164_001:0670a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛復告妙月長者言。",
        "from": "T20n1164_001:0670a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往昔過去無數劫中。",
        "from": "T20n1164_001:0670a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼世時有佛出世。",
        "from": "T20n1164_001:0670a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名持金剛海大音聲如來應供正遍知明行足善逝世間解無上士調御丈夫天人師佛世尊。",
        "from": "T20n1164_001:0670a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當於彼世尊之處。",
        "from": "T20n1164_001:0670a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞陀羅尼名吉祥持世。",
        "from": "T20n1164_001:0670a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞是法已我常受持讀誦至誠供養。",
        "from": "T20n1164_001:0670a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復為他廣說是陀羅尼。",
        "from": "T20n1164_001:0670a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我今為汝說此陀羅尼擁護於汝。",
        "from": "T20n1164_001:0670a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人不能為害非人亦不能為害。",
        "from": "T20n1164_001:0670a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥叉不能為害囉剎娑不能為害。",
        "from": "T20n1164_001:0670a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢隷二合多不能為害步多不能為害。",
        "from": "T20n1164_001:0670a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比舍遮不能為害。",
        "from": "T20n1164_001:0670a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矩伴拏不能為害。",
        "from": "T20n1164_001:0670a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄔娑多二合囉迦去不能為害布單曩引不能為害。",
        "from": "T20n1164_001:0670a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揭吒布單曩引不能為害。",
        "from": "T20n1164_001:0670a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食大便者不能為害。",
        "from": "T20n1164_001:0670b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食小便者不能為害。",
        "from": "T20n1164_001:0670b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食種種淨不淨物者亦不能為害。",
        "from": "T20n1164_001:0670b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙月長者此吉祥持世陀羅尼。",
        "from": "T20n1164_001:0670b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T20n1164_001:0670b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此陀羅尼經在於自己舍宅之中。",
        "from": "T20n1164_001:0670b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在手中恭敬供養。",
        "from": "T20n1164_001:0670b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或心思惟是經法者。",
        "from": "T20n1164_001:0670b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或得聽聞是經法者。",
        "from": "T20n1164_001:0670b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便乃受持讀誦供養。",
        "from": "T20n1164_001:0670b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或廣為他解說義趣。",
        "from": "T20n1164_001:0670b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此善男子善女人。",
        "from": "T20n1164_001:0670b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜常得衛護安隱快樂。",
        "from": "T20n1164_001:0670b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食豐足獲大福德。",
        "from": "T20n1164_001:0670b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此吉祥持世陀羅尼經。",
        "from": "T20n1164_001:0670b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能至心供養之者。",
        "from": "T20n1164_001:0670b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則是供養過去現在未來之世一切如來應正等覺。",
        "from": "T20n1164_001:0670b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能依法常於中夜。",
        "from": "T20n1164_001:0670b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "課念此陀羅尼四遍。",
        "from": "T20n1164_001:0670b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人便得諸天而來衛護歡喜愛樂。",
        "from": "T20n1164_001:0670b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為此人親自來下降。",
        "from": "T20n1164_001:0670b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨上妙甘美飲食。",
        "from": "T20n1164_001:0670b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天眾等於諸如來心懷歡喜。",
        "from": "T20n1164_001:0670b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸佛法心懷歡喜。",
        "from": "T20n1164_001:0670b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛無相智心懷歡喜。",
        "from": "T20n1164_001:0670b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於和合眾心懷歡喜。",
        "from": "T20n1164_001:0670b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於說法師心懷歡喜。",
        "from": "T20n1164_001:0670b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛復告妙月長者言。",
        "from": "T20n1164_001:0670b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為汝及未來世一切眾生。",
        "from": "T20n1164_001:0670b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得廣大利益安樂。",
        "from": "T20n1164_001:0670b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是吉祥持世陀羅尼曰。",
        "from": "T20n1164_001:0670b17_16",
        "context_with_next_sentence": true
    },
    {
