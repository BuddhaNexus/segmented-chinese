{
    "X35n0652_002:0266b07_0": "金剛三昧經通宗記卷第二",
    "X35n0652_002:0266b09_0": "天台山華頂嗣祖沙門　寂震　述",
    "X35n0652_002:0266b10_0": "無相法品第二之上",
    "X35n0652_002:0266b11_0": "此為般若分。",
    "X35n0652_002:0266b11_1": "夫般若為諸佛之母。",
    "X35n0652_002:0266b11_2": "諸法中王。",
    "X35n0652_002:0266b11_3": "一切諸佛。",
    "X35n0652_002:0266b12_4": "從茲出生。",
    "X35n0652_002:0266b12_5": "一切萬法。",
    "X35n0652_002:0266b12_6": "從茲建立。",
    "X35n0652_002:0266b12_7": "雖則能生能立。",
    "X35n0652_002:0266b13_8": "而般若之法。",
    "X35n0652_002:0266b13_9": "本自無相。",
    "X35n0652_002:0266b13_10": "故謂之無相法也。",
    "X35n0652_002:0266b13_11": "然無相之法。",
    "X35n0652_002:0266b14_12": "即真如自心之法。",
    "X35n0652_002:0266b14_13": "能含攝一切。",
    "X35n0652_002:0266b14_14": "以故此無相法品中。",
    "X35n0652_002:0266b15_15": "先為發起無生。",
    "X35n0652_002:0266b15_16": "覺利。",
    "X35n0652_002:0266b15_17": "實際。",
    "X35n0652_002:0266b15_18": "性空。",
    "X35n0652_002:0266b15_19": "如來藏。",
    "X35n0652_002:0266b16_0": "總持。",
    "X35n0652_002:0266b16_1": "六品之法。",
    "X35n0652_002:0266b16_2": "品末。",
    "X35n0652_002:0266b16_3": "別明六波羅蜜。",
    "X35n0652_002:0266b16_4": "又總攝前六地法。",
    "X35n0652_002:0266b17_5": "而獨顯般若現前。",
    "X35n0652_002:0266b17_6": "以發明第六地行相。",
    "X35n0652_002:0266b17_7": "又初地至五地。",
    "X35n0652_002:0266b18_8": "未能久住無相法中。",
    "X35n0652_002:0266b18_9": "六地專修無相法。",
    "X35n0652_002:0266b19_0": "七地始證無相。",
    "X35n0652_002:0266b19_1": "獲無生法忍。",
    "X35n0652_002:0266b19_2": "便入第八地。",
    "X35n0652_002:0266b19_3": "得無功用道。",
    "X35n0652_002:0266b20_4": "方得滿地。",
    "X35n0652_002:0266b20_5": "方得覺滿。",
    "X35n0652_002:0266b20_6": "以故無相法品。",
    "X35n0652_002:0266b20_7": "總攝前六地。",
    "X35n0652_002:0266b21_8": "又發起後四地。",
    "X35n0652_002:0266b21_9": "及等妙二覺。",
    "X35n0652_002:0266b21_10": "故直至妙覺位。",
    "X35n0652_002:0266b22_0": "亦不出此無相法也。",
    "X35n0652_002:0266b22_1": "又無相即法身義。",
    "X35n0652_002:0266b22_2": "今以般若收歸解脫。",
    "X35n0652_002:0266b23_3": "則圓成涅槃三德祕藏也。",
    "X35n0652_002:0266b24_0": "爾時世尊從三昧起。",
    "X35n0652_002:0266b24_1": "而說是言。",
    "X35n0652_002:0266b24_2": "諸佛智地。",
    "X35n0652_002:0266b24_3": "入實法相。",
    "X35n0652_002:0266c01_0": "決定性故。",
    "X35n0652_002:0266c01_1": "方便神通。",
    "X35n0652_002:0266c01_2": "皆無相利。",
    "X35n0652_002:0266c01_3": "一覺了義。",
    "X35n0652_002:0266c01_4": "難解難入。",
    "X35n0652_002:0266c02_0": "非諸二乘之所知見。",
    "X35n0652_002:0266c02_1": "惟佛菩薩。",
    "X35n0652_002:0266c02_2": "乃能知之。",
    "X35n0652_002:0266c02_3": "可度眾生。",
    "X35n0652_002:0266c03_0": "皆說一味。",
    "X35n0652_002:0266c04_0": "此出定自述。",
    "X35n0652_002:0266c04_1": "乃如來方便開化之端。",
    "X35n0652_002:0266c04_2": "夫三昧是宗。",
    "X35n0652_002:0266c05_0": "言說是教。",
    "X35n0652_002:0266c05_1": "宗無教不顯。",
    "X35n0652_002:0266c05_2": "教無宗不立。",
    "X35n0652_002:0266c05_3": "故今別開第二義門。",
    "X35n0652_002:0266c06_4": "以言顯無言。",
    "X35n0652_002:0266c06_5": "即從序品中。",
    "X35n0652_002:0266c06_6": "入佛智地說起。",
    "X35n0652_002:0266c07_0": "所謂佛智地者。",
    "X35n0652_002:0266c07_1": "唯明性相而已。",
    "X35n0652_002:0266c07_2": "葢相為萬法唯識之宗。",
    "X35n0652_002:0266c08_3": "性為萬法唯心之旨。",
    "X35n0652_002:0266c08_4": "唯識。",
    "X35n0652_002:0266c08_5": "摧外道小乘迷謬之執。",
    "X35n0652_002:0266c09_6": "唯心。",
    "X35n0652_002:0266c09_7": "顯如來藏。",
    "X35n0652_002:0266c09_8": "真如自性之體。",
    "X35n0652_002:0266c09_9": "然必須性相互融。",
    "X35n0652_002:0266c10_10": "心識俱泯。",
    "X35n0652_002:0266c10_11": "方得為究竟覺也。",
    "X35n0652_002:0266c10_12": "又他經不明性相。",
    "X35n0652_002:0266c11_13": "於義亦通。",
    "X35n0652_002:0266c11_14": "此經不明性相。",
    "X35n0652_002:0266c11_15": "其義不顯。",
    "X35n0652_002:0266c11_16": "然性相二宗。",
    "X35n0652_002:0266c12_17": "皆依大乘經義造論。",
    "X35n0652_002:0266c12_18": "葢自佛滅度後。",
    "X35n0652_002:0266c12_19": "天親菩薩。",
    "X35n0652_002:0266c13_0": "依解深密經。",
    "X35n0652_002:0266c13_1": "造唯識論。",
    "X35n0652_002:0266c13_2": "親勝火辨。",
    "X35n0652_002:0266c13_3": "同時造釋論。",
    "X35n0652_002:0266c13_4": "至佛滅度千有餘年。",
    "X35n0652_002:0266c14_5": "有護法陳那等。",
    "X35n0652_002:0266c14_6": "約前頌論。",
    "X35n0652_002:0266c14_7": "造成唯識論。",
    "X35n0652_002:0266c15_8": "此名法相宗。",
    "X35n0652_002:0266c15_9": "馬鳴菩薩。",
    "X35n0652_002:0266c15_10": "應如來懸記。",
    "X35n0652_002:0266c15_11": "於佛滅度六百年後而生。",
    "X35n0652_002:0266c16_12": "依楞伽經。",
    "X35n0652_002:0266c16_13": "製大乘起信論。",
    "X35n0652_002:0266c16_14": "廣說阿賴(一作梨)耶中。",
    "X35n0652_002:0266c17_15": "三細識。",
    "X35n0652_002:0266c17_16": "六粗相。",
    "X35n0652_002:0266c17_17": "一心真如。",
    "X35n0652_002:0266c17_18": "生滅二門。",
    "X35n0652_002:0266c18_19": "此即名法性宗。",
    "X35n0652_002:0266c18_20": "後龍樹菩薩。",
    "X35n0652_002:0266c18_21": "製摩訶衍論。",
    "X35n0652_002:0266c18_22": "引一百本大乘經。",
    "X35n0652_002:0266c19_23": "證八識心王。",
    "X35n0652_002:0266c19_24": "性相微細等義。",
    "X35n0652_002:0266c19_25": "此性相二宗之始也。",
    "X35n0652_002:0266c20_26": "然二宗立論。",
    "X35n0652_002:0266c20_27": "既各本一經為主。",
    "X35n0652_002:0266c20_28": "自不能契同。",
    "X35n0652_002:0266c21_29": "若約成唯識論。",
    "X35n0652_002:0266c21_30": "以現識與分別事識。",
    "X35n0652_002:0266c21_31": "和合為宗。",
    "X35n0652_002:0266c22_32": "若約起信論。",
    "X35n0652_002:0266c22_33": "以真識。",
    "X35n0652_002:0266c22_34": "現識。",
    "X35n0652_002:0266c22_35": "分別事識。",
    "X35n0652_002:0266c22_36": "和合為宗。",
    "X35n0652_002:0266c23_37": "真識。",
    "X35n0652_002:0266c23_38": "即如來藏寂滅一心。",
    "X35n0652_002:0266c23_39": "現識。",
    "X35n0652_002:0266c23_40": "即第八阿梨耶識。",
    "X35n0652_002:0266c24_41": "能隨五塵對至即現故。",
    "X35n0652_002:0266c24_42": "分別事識。",
    "X35n0652_002:0266c24_43": "即是第六意識。",
    "X35n0652_002:0267a01_44": "能隨事攀緣。",
    "X35n0652_002:0267a01_45": "分別六塵故。",
    "X35n0652_002:0267a01_46": "然不言第七末那識者。",
    "X35n0652_002:0267a02_47": "謂有八六兩識。",
    "X35n0652_002:0267a02_48": "必有末那。",
    "X35n0652_002:0267a02_49": "以末那緣於第八。",
    "X35n0652_002:0267a03_0": "又依第八而轉。",
    "X35n0652_002:0267a03_1": "六又以七為根。",
    "X35n0652_002:0267a03_2": "故末那之細分。",
    "X35n0652_002:0267a03_3": "通於現識。",
    "X35n0652_002:0267a04_4": "而粗分。",
    "X35n0652_002:0267a04_5": "通意識也。",
    "X35n0652_002:0267a04_6": "古德以日中設水器為喻。",
    "X35n0652_002:0267a05_7": "水器。",
    "X35n0652_002:0267a05_8": "猶第八識。",
    "X35n0652_002:0267a05_9": "日猶六識。",
    "X35n0652_002:0267a05_10": "然日以器中之水為緣。",
    "X35n0652_002:0267a06_11": "乃有壁間浮動之影。",
    "X35n0652_002:0267a06_12": "影猶末那也。",
    "X35n0652_002:0267a06_13": "又約相宗立義。",
    "X35n0652_002:0267a07_14": "言心及心所法。",
    "X35n0652_002:0267a07_15": "四分合成。",
    "X35n0652_002:0267a07_16": "有相分。",
    "X35n0652_002:0267a07_17": "見分。",
    "X35n0652_002:0267a07_18": "自證分。",
    "X35n0652_002:0267a08_0": "證自證分。",
    "X35n0652_002:0267a08_1": "如證自證分。",
    "X35n0652_002:0267a08_2": "為不迷之真如。",
    "X35n0652_002:0267a08_3": "自證分。",
    "X35n0652_002:0267a08_4": "真如一分迷中佛性。",
    "X35n0652_002:0267a09_5": "即本覺心體。",
    "X35n0652_002:0267a09_6": "以眾生雖迷。",
    "X35n0652_002:0267a09_7": "有真如自體可證。",
    "X35n0652_002:0267a10_8": "故云自證。",
    "X35n0652_002:0267a10_9": "真如體上。",
    "X35n0652_002:0267a10_10": "有二種用。",
    "X35n0652_002:0267a10_11": "一能緣用。",
    "X35n0652_002:0267a11_12": "謂之見分。",
    "X35n0652_002:0267a11_13": "二所緣用。",
    "X35n0652_002:0267a11_14": "謂之相分。",
    "X35n0652_002:0267a11_15": "攝用歸體。",
    "X35n0652_002:0267a11_16": "唯一自證分。",
    "X35n0652_002:0267a12_17": "所以山河大地。",
    "X35n0652_002:0267a12_18": "是心相分。",
    "X35n0652_002:0267a12_19": "心外無法。",
    "X35n0652_002:0267a12_20": "故曰唯識。",
    "X35n0652_002:0267a13_21": "此實為名相之宗也。",
    "X35n0652_002:0267a13_22": "但後學惟宗名相。",
    "X35n0652_002:0267a13_23": "祇益多聞。",
    "X35n0652_002:0267a14_24": "不名學道。",
    "X35n0652_002:0267a14_25": "必須悟自本性。",
    "X35n0652_002:0267a14_26": "方得解脫。",
    "X35n0652_002:0267a14_27": "以故。",
    "X35n0652_002:0267a15_0": "必當先明性宗之義。",
    "X35n0652_002:0267a15_1": "如云真如心體。",
    "X35n0652_002:0267a15_2": "本不屬迷悟。",
    "X35n0652_002:0267a16_0": "迥超生滅。",
    "X35n0652_002:0267a16_1": "不變不壞。",
    "X35n0652_002:0267a16_2": "而真如相用。",
    "X35n0652_002:0267a16_3": "全在生滅識中顯現。",
    "X35n0652_002:0267a17_4": "所謂真如不守自性。",
    "X35n0652_002:0267a17_5": "故隨緣變現。",
    "X35n0652_002:0267a17_6": "真如不壞自性。",
    "X35n0652_002:0267a18_7": "故不變隨緣。",
    "X35n0652_002:0267a18_8": "由此立心真如門。",
    "X35n0652_002:0267a18_9": "心生滅門。",
    "X35n0652_002:0267a18_10": "若眾生修證。",
    "X35n0652_002:0267a19_11": "必從生滅門悟。",
    "X35n0652_002:0267a19_12": "而證真如門。",
    "X35n0652_002:0267a19_13": "故以生滅與不生滅和合。",
    "X35n0652_002:0267a20_14": "非一非異。",
    "X35n0652_002:0267a20_15": "為阿梨耶識。",
    "X35n0652_002:0267a20_16": "以起根身器界。",
    "X35n0652_002:0267a21_17": "如地水火風而依於空。",
    "X35n0652_002:0267a21_18": "為器界五法。",
    "X35n0652_002:0267a21_19": "見聞知覺而依於識。",
    "X35n0652_002:0267a22_20": "為根身五法。",
    "X35n0652_002:0267a22_21": "於此十法。",
    "X35n0652_002:0267a22_22": "顯示一心迷悟之源。",
    "X35n0652_002:0267a23_23": "若了悟一心。",
    "X35n0652_002:0267a23_24": "即得根本實智。",
    "X35n0652_002:0267a23_25": "故曰萬法唯心為正宗。",
    "X35n0652_002:0267a24_26": "然唯心一宗。",
    "X35n0652_002:0267a24_27": "實乃統攝始終圓頓四教。",
    "X35n0652_002:0267b01_0": "而為眾生成佛之要門也。",
    "X35n0652_002:0267b01_1": "今此佛說金剛三昧。",
    "X35n0652_002:0267b01_2": "發明諸佛智地。",
    "X35n0652_002:0267b02_3": "故先唱言。",
    "X35n0652_002:0267b02_4": "入實法相。",
    "X35n0652_002:0267b02_5": "決定性故。",
    "X35n0652_002:0267b02_6": "夫入實者。",
    "X35n0652_002:0267b03_7": "入於實際也。",
    "X35n0652_002:0267b03_8": "若悟心法無際。",
    "X35n0652_002:0267b03_9": "則入於實際。",
    "X35n0652_002:0267b03_10": "今入實法相。",
    "X35n0652_002:0267b04_11": "則入於實際之法。",
    "X35n0652_002:0267b04_12": "得實際之相。",
    "X35n0652_002:0267b04_13": "皆決定知一切法。",
    "X35n0652_002:0267b05_14": "緣生無性。",
    "X35n0652_002:0267b05_15": "此直示真如寂滅之體。",
    "X35n0652_002:0267b05_16": "真如之體。",
    "X35n0652_002:0267b06_17": "即無相法。",
    "X35n0652_002:0267b06_18": "即是根本智。",
    "X35n0652_002:0267b06_19": "所有方便神通。",
    "X35n0652_002:0267b06_20": "皆從無相法中所出之利。",
    "X35n0652_002:0267b07_21": "然此乃是一念相應。",
    "X35n0652_002:0267b07_22": "頓然覺悟了義之法。",
    "X35n0652_002:0267b08_23": "故難解難入。",
    "X35n0652_002:0267b08_24": "非諸二乘之所知見。",
    "X35n0652_002:0267b08_25": "知見有四種。",
    "X35n0652_002:0267b09_26": "如地前異生。",
    "X35n0652_002:0267b09_27": "不見不知。",
    "X35n0652_002:0267b09_28": "初地至九地。",
    "X35n0652_002:0267b09_29": "知而不見。",
    "X35n0652_002:0267b10_30": "十地見而不知。",
    "X35n0652_002:0267b10_31": "惟佛與大菩薩。",
    "X35n0652_002:0267b10_32": "亦知亦見。",
    "X35n0652_002:0267b11_0": "故云惟佛菩薩乃能知之。",
    "X35n0652_002:0267b11_1": "雖然。",
    "X35n0652_002:0267b11_2": "若見可度眾生。",
    "X35n0652_002:0267b11_3": "皆當為說此一味法也。",
    "X35n0652_002:0267b12_4": "曉法師論釋云。",
    "X35n0652_002:0267b12_5": "皆說一味者。",
    "X35n0652_002:0267b13_0": "令入一覺味故。",
    "X35n0652_002:0267b13_1": "即是大乘。",
    "X35n0652_002:0267b13_2": "欲明一切眾生本來一覺。",
    "X35n0652_002:0267b14_3": "但由無明。",
    "X35n0652_002:0267b14_4": "隨夢流轉。",
    "X35n0652_002:0267b14_5": "皆從如來一味之說。",
    "X35n0652_002:0267b14_6": "無不終歸一心之源。",
    "X35n0652_002:0267b15_7": "如此說。",
    "X35n0652_002:0267b15_8": "終自不了。",
    "X35n0652_002:0267b15_9": "何故。",
    "X35n0652_002:0267b15_10": "總輸他歸宗禪師接大愚。",
    "X35n0652_002:0267b16_11": "用得直截。",
    "X35n0652_002:0267b16_12": "昔大愚欲往諸方學五味禪。",
    "X35n0652_002:0267b17_13": "歸宗云。",
    "X35n0652_002:0267b17_14": "我者裏只有一味禪。",
    "X35n0652_002:0267b17_15": "大愚便問。",
    "X35n0652_002:0267b17_16": "如何是一味禪。",
    "X35n0652_002:0267b18_17": "問聲未絕。",
    "X35n0652_002:0267b18_18": "即被歸宗打出。",
    "X35n0652_002:0267b18_19": "大愚即於棒下頓悟其旨。",
    "X35n0652_002:0267b19_20": "須是恁麼始得。",
    "X35n0652_002:0267b20_0": "爾時解脫菩薩。",
    "X35n0652_002:0267b20_1": "即從座起。",
    "X35n0652_002:0267b20_2": "合掌胡跪。",
    "X35n0652_002:0267b20_3": "而白佛言。",
    "X35n0652_002:0267b20_4": "尊者。",
    "X35n0652_002:0267b21_0": "若佛滅後。",
    "X35n0652_002:0267b21_1": "正法去世。",
    "X35n0652_002:0267b21_2": "像法住世。",
    "X35n0652_002:0267b21_3": "於末劫中。",
    "X35n0652_002:0267b21_4": "五濁眾生多諸惡業。",
    "X35n0652_002:0267b22_5": "輪迴三界。",
    "X35n0652_002:0267b22_6": "無有出時。",
    "X35n0652_002:0267b22_7": "願佛慈悲。",
    "X35n0652_002:0267b22_8": "為後世(有本無世字)眾生。",
    "X35n0652_002:0267b23_9": "宣說一味決定真實。",
    "X35n0652_002:0267b23_10": "令彼眾生。",
    "X35n0652_002:0267b23_11": "等同解脫。",
    "X35n0652_002:0267b24_0": "此因勸而問。",
    "X35n0652_002:0267b24_1": "發起無生行品之法。",
    "X35n0652_002:0267b24_2": "葢自既解脫。",
    "X35n0652_002:0267b24_3": "欲令一切眾生同得解脫也。",
    "X35n0652_002:0267c01_4": "稱佛為尊者。",
    "X35n0652_002:0267c01_5": "以明出世之法。",
    "X35n0652_002:0267c02_6": "故不稱世尊。",
    "X35n0652_002:0267c02_7": "佛之正法像法。",
    "X35n0652_002:0267c02_8": "初皆住世千年。",
    "X35n0652_002:0267c03_0": "後又增住正法四百年。",
    "X35n0652_002:0267c03_1": "像法千五百年。",
    "X35n0652_002:0267c03_2": "共計三千九百年。",
    "X35n0652_002:0267c04_3": "此載法苑珠林中。",
    "X35n0652_002:0267c04_4": "按佛入滅。",
    "X35n0652_002:0267c04_5": "自周穆王壬申。",
    "X35n0652_002:0267c05_6": "至今康熈辛酉閱經之歲。",
    "X35n0652_002:0267c05_7": "凡二千六百三十年耳。",
    "X35n0652_002:0267c06_8": "劫者。",
    "X35n0652_002:0267c06_9": "此云時分。",
    "X35n0652_002:0267c06_10": "亦以初中後分之。",
    "X35n0652_002:0267c06_11": "末劫。",
    "X35n0652_002:0267c06_12": "乃對劫初而言也。",
    "X35n0652_002:0267c07_13": "正法。",
    "X35n0652_002:0267c07_14": "是諸佛所覺所說一切法空。",
    "X35n0652_002:0267c07_15": "佛入滅後。",
    "X35n0652_002:0267c08_16": "則正法流布住世。",
    "X35n0652_002:0267c08_17": "及去佛遙遠。",
    "X35n0652_002:0267c08_18": "必取象示法。",
    "X35n0652_002:0267c09_0": "為像法住世。",
    "X35n0652_002:0267c09_1": "圓覺經云。",
    "X35n0652_002:0267c09_2": "末世眾生。",
    "X35n0652_002:0267c09_3": "不了人我眾生壽命四相。",
    "X35n0652_002:0267c10_4": "雖經多劫。",
    "X35n0652_002:0267c10_5": "勤苦修道。",
    "X35n0652_002:0267c10_6": "但為有為。",
    "X35n0652_002:0267c10_7": "終不得成聖果。",
    "X35n0652_002:0267c11_8": "是故名為正法末世。",
    "X35n0652_002:0267c11_9": "又釋曰。",
    "X35n0652_002:0267c11_10": "末世修證無相。",
    "X35n0652_002:0267c12_11": "還同正法。",
    "X35n0652_002:0267c12_12": "若正法中。",
    "X35n0652_002:0267c12_13": "取證於相。",
    "X35n0652_002:0267c12_14": "亦同末世也。",
    "X35n0652_002:0267c12_15": "夫眾生由五陰妄想而成五濁。",
    "X35n0652_002:0267c13_16": "如色陰堅固。",
    "X35n0652_002:0267c13_17": "四大所纏。",
    "X35n0652_002:0267c14_18": "有劫濁。",
    "X35n0652_002:0267c14_19": "受陰虗明。",
    "X35n0652_002:0267c14_20": "旋生異見。",
    "X35n0652_002:0267c14_21": "有見濁。",
    "X35n0652_002:0267c14_22": "想陰融通。",
    "X35n0652_002:0267c15_0": "動搖妄情。",
    "X35n0652_002:0267c15_1": "有煩惱濁。",
    "X35n0652_002:0267c15_2": "行陰幽隱。",
    "X35n0652_002:0267c15_3": "情隨業遷。",
    "X35n0652_002:0267c15_4": "有眾生濁。",
    "X35n0652_002:0267c16_5": "識陰顛倒。",
    "X35n0652_002:0267c16_6": "眾塵隔越。",
    "X35n0652_002:0267c16_7": "有命濁。",
    "X35n0652_002:0267c16_8": "若五陰盡。",
    "X35n0652_002:0267c16_9": "則超五濁。",
    "X35n0652_002:0267c17_10": "又命濁連相。",
    "X35n0652_002:0267c17_11": "以色心為體。",
    "X35n0652_002:0267c17_12": "以摧年減壽為相。",
    "X35n0652_002:0267c17_13": "眾生濁。",
    "X35n0652_002:0267c18_14": "見慢果報。",
    "X35n0652_002:0267c18_15": "立此假名。",
    "X35n0652_002:0267c18_16": "惡名穢稱為相。",
    "X35n0652_002:0267c18_17": "煩惱濁。",
    "X35n0652_002:0267c19_0": "五鈍使為體。",
    "X35n0652_002:0267c19_1": "三災為相。",
    "X35n0652_002:0267c19_2": "見濁。",
    "X35n0652_002:0267c19_3": "五利使為體。",
    "X35n0652_002:0267c19_4": "諸見轉盛為相。",
    "X35n0652_002:0267c20_5": "劫濁。",
    "X35n0652_002:0267c20_6": "約四濁。",
    "X35n0652_002:0267c20_7": "立此假名。",
    "X35n0652_002:0267c20_8": "四濁增劇。",
    "X35n0652_002:0267c20_9": "聚在此時也。",
    "X35n0652_002:0267c21_10": "由五濁中。",
    "X35n0652_002:0267c21_11": "造諸惡業。",
    "X35n0652_002:0267c21_12": "生於三界。",
    "X35n0652_002:0267c21_13": "欲界。",
    "X35n0652_002:0267c21_14": "希須樂欲。",
    "X35n0652_002:0267c22_15": "色界。",
    "X35n0652_002:0267c22_16": "未出色籠。",
    "X35n0652_002:0267c22_17": "無色界。",
    "X35n0652_002:0267c22_18": "祇有受想行識四陰。",
    "X35n0652_002:0267c22_19": "而無色陰。",
    "X35n0652_002:0267c23_20": "此皆因果不忘。",
    "X35n0652_002:0267c23_21": "有生有死。",
    "X35n0652_002:0267c23_22": "如輪之迴轉。",
    "X35n0652_002:0267c23_23": "無有出時。",
    "X35n0652_002:0267c24_24": "又此三界。",
    "X35n0652_002:0267c24_25": "不出身心。",
    "X35n0652_002:0267c24_26": "及諸塵境。",
    "X35n0652_002:0267c24_27": "為迷真性故。",
    "X35n0652_002:0268a01_28": "即有濁辱。",
    "X35n0652_002:0268a01_29": "生其妄氣者。",
    "X35n0652_002:0268a01_30": "澄清微為無色界。",
    "X35n0652_002:0268a01_31": "所謂心也。",
    "X35n0652_002:0268a02_32": "澄濁辱為色界。",
    "X35n0652_002:0268a02_33": "所謂身也。",
    "X35n0652_002:0268a02_34": "散滓穢為欲界。",
    "X35n0652_002:0268a02_35": "所謂塵境也。",
    "X35n0652_002:0268a03_36": "古德云。",
    "X35n0652_002:0268a03_37": "但內一不生。",
    "X35n0652_002:0268a03_38": "則無諸有欲。",
    "X35n0652_002:0268a03_39": "如是。",
    "X35n0652_002:0268a04_0": "則三界五濁。",
    "X35n0652_002:0268a04_1": "本自空寂。",
    "X35n0652_002:0268a04_2": "廓然無際。",
    "X35n0652_002:0268a04_3": "唯一真心耳。",
    "X35n0652_002:0268a04_4": "又諸佛四無量心。",
    "X35n0652_002:0268a05_5": "各有三種緣。",
    "X35n0652_002:0268a05_6": "一者生緣。",
    "X35n0652_002:0268a05_7": "緣一切眾生相。",
    "X35n0652_002:0268a06_8": "二者法緣。",
    "X35n0652_002:0268a06_9": "緣五蘊差別相。",
    "X35n0652_002:0268a06_10": "三者無緣。",
    "X35n0652_002:0268a06_11": "不緣前二相故。",
    "X35n0652_002:0268a07_12": "是以佛行無緣慈。",
    "X35n0652_002:0268a07_13": "為眾生說法。",
    "X35n0652_002:0268a07_14": "自不見有佛道可成。",
    "X35n0652_002:0268a08_15": "他不見有眾生可度。",
    "X35n0652_002:0268a08_16": "故其所說法。",
    "X35n0652_002:0268a08_17": "無說無示。",
    "X35n0652_002:0268a09_18": "使聽法者。",
    "X35n0652_002:0268a09_19": "無聞無得。",
    "X35n0652_002:0268a09_20": "此佛之大慈悲也。",
    "X35n0652_002:0268a09_21": "若於菩薩。",
    "X35n0652_002:0268a10_22": "則修慈斷貪欲。",
    "X35n0652_002:0268a10_23": "修悲斷嗔恚。",
    "X35n0652_002:0268a10_24": "修喜斷不樂。",
    "X35n0652_002:0268a10_25": "修此三者。",
    "X35n0652_002:0268a11_26": "即住一子地。",
    "X35n0652_002:0268a11_27": "若修於捨。",
    "X35n0652_002:0268a11_28": "則斷貪恚。",
    "X35n0652_002:0268a11_29": "及眾生相。",
    "X35n0652_002:0268a12_30": "然今為後世眾生。",
    "X35n0652_002:0268a12_31": "請說一味之法。",
    "X35n0652_002:0268a12_32": "得決定真如實際。",
    "X35n0652_002:0268a13_33": "與圓覺會中菩薩。",
    "X35n0652_002:0268a13_34": "為未來末世眾生。",
    "X35n0652_002:0268a13_35": "求大乘者請。",
    "X35n0652_002:0268a14_36": "其意同也。",
    "X35n0652_002:0268a14_37": "圭峯作疏。",
    "X35n0652_002:0268a14_38": "引此一節以證頓。",
    "X35n0652_002:0268a14_39": "為此經與末世凡夫。",
    "X35n0652_002:0268a15_40": "便說究竟深法。",
    "X35n0652_002:0268a15_41": "不同漸教中。",
    "X35n0652_002:0268a15_42": "先小次權。",
    "X35n0652_002:0268a16_43": "後方說實。",
    "X35n0652_002:0268a16_44": "至若執漸迷頓者。",
    "X35n0652_002:0268a16_45": "謂凡夫不合便悟佛地之法。",
    "X35n0652_002:0268a17_46": "此不可以語頓也。",
    "X35n0652_002:0268a18_0": "佛言。",
    "X35n0652_002:0268a18_1": "善男子。",
    "X35n0652_002:0268a18_2": "汝能問我出世之因。",
    "X35n0652_002:0268a18_3": "欲化眾生。",
    "X35n0652_002:0268a18_4": "令彼眾生。",
    "X35n0652_002:0268a19_5": "獲得出世之果。",
    "X35n0652_002:0268a19_6": "是一大事。",
    "X35n0652_002:0268a19_7": "不可思議。",
    "X35n0652_002:0268a19_8": "以大慈故。",
    "X35n0652_002:0268a19_9": "以大悲故。",
    "X35n0652_002:0268a20_10": "我若不說。",
    "X35n0652_002:0268a20_11": "即墮慳貪。",
    "X35n0652_002:0268a20_12": "汝等一心諦聽。",
    "X35n0652_002:0268a20_13": "為汝宣說。",
    "X35n0652_002:0268a22_0": "此贊可能問也。",
    "X35n0652_002:0268a22_1": "夫順理者為善。",
    "X35n0652_002:0268a22_2": "有剛斷者。",
    "X35n0652_002:0268a22_3": "可稱男子。",
    "X35n0652_002:0268a23_4": "出世之因。",
    "X35n0652_002:0268a23_5": "即眾生本覺。",
    "X35n0652_002:0268a23_6": "出世之果。",
    "X35n0652_002:0268a23_7": "即諸佛始覺。",
    "X35n0652_002:0268a24_0": "又稱始覺為本覺之果。",
    "X35n0652_002:0268a24_1": "然始覺即是了因。",
    "X35n0652_002:0268a24_2": "會緣方了。",
    "X35n0652_002:0268b01_3": "故以六度行。",
    "X35n0652_002:0268b01_4": "與菩提分法為緣因。",
    "X35n0652_002:0268b01_5": "緣此以為因。",
    "X35n0652_002:0268b02_0": "方能了故。",
    "X35n0652_002:0268b02_1": "了者。",
    "X35n0652_002:0268b02_2": "悟本覺正因佛性也。",
    "X35n0652_002:0268b02_3": "據我宗門下。",
    "X35n0652_002:0268b03_0": "學般若菩薩。",
    "X35n0652_002:0268b03_1": "只將一句本參話頭。",
    "X35n0652_002:0268b03_2": "為緣因。",
    "X35n0652_002:0268b03_3": "又只在聞聲見色處。",
    "X35n0652_002:0268b04_4": "便是了因。",
    "X35n0652_002:0268b04_5": "所以香嚴聞擊竹。",
    "X35n0652_002:0268b04_6": "靈雲見桃花。",
    "X35n0652_002:0268b05_7": "與如來睹明星悟道一般。",
    "X35n0652_002:0268b05_8": "故稱為從緣薦得。",
    "X35n0652_002:0268b06_0": "永無退失也。",
    "X35n0652_002:0268b06_1": "以故宗乘中。",
    "X35n0652_002:0268b06_2": "只在日用邊。",
    "X35n0652_002:0268b06_3": "繁興大用。",
    "X35n0652_002:0268b07_0": "此真是轉八萬四千塵勞。",
    "X35n0652_002:0268b07_1": "為八萬四千波羅蜜門。",
    "X35n0652_002:0268b08_0": "是以從上諸祖。",
    "X35n0652_002:0268b08_1": "或於棒下成等正覺。",
    "X35n0652_002:0268b08_2": "或於喝下成等正覺。",
    "X35n0652_002:0268b09_3": "或於言下成等正覺。",
    "X35n0652_002:0268b09_4": "或於拈椎舉拂處。",
    "X35n0652_002:0268b09_5": "成等正覺。",
    "X35n0652_002:0268b10_6": "此真是圓頓法門。",
    "X35n0652_002:0268b10_7": "今此經。",
    "X35n0652_002:0268b10_8": "實乃通貫諸經中圓頓之理。",
    "X35n0652_002:0268b11_9": "故曰是一大事。",
    "X35n0652_002:0268b11_10": "不可思議。",
    "X35n0652_002:0268b11_11": "前菩薩求佛慈悲而說法。",
    "X35n0652_002:0268b12_12": "今佛即以慈悲。",
    "X35n0652_002:0268b12_13": "轉讚菩薩之能問。",
    "X35n0652_002:0268b13_0": "正顯主伴同德同心。",
    "X35n0652_002:0268b13_1": "以大慈拔後世眾生世間之苦。",
    "X35n0652_002:0268b14_2": "以大悲與後世眾生出世間之法樂。",
    "X35n0652_002:0268b14_3": "又且明唯佛菩薩乃能知之。",
    "X35n0652_002:0268b15_4": "然此中理極玄微。",
    "X35n0652_002:0268b15_5": "實難言說。",
    "X35n0652_002:0268b15_6": "雖然。",
    "X35n0652_002:0268b16_7": "我若愛法不說。",
    "X35n0652_002:0268b16_8": "即墮慳貪。",
    "X35n0652_002:0268b16_9": "今翻慳貪而為喜捨。",
    "X35n0652_002:0268b17_0": "故有此七品玅法。",
    "X35n0652_002:0268b17_1": "真是無中生有。",
    "X35n0652_002:0268b17_2": "愈出愈奇。",
    "X35n0652_002:0268b17_3": "游心其間。",
    "X35n0652_002:0268b18_4": "如觀海上蜃樓。",
    "X35n0652_002:0268b18_5": "究竟無有一法可得。",
    "X35n0652_002:0268b18_6": "持是經者。",
    "X35n0652_002:0268b19_7": "當作是觀。",
    "X35n0652_002:0268b20_0": "善男子。",
    "X35n0652_002:0268b20_1": "若化眾生。",
    "X35n0652_002:0268b20_2": "無生於化。",
    "X35n0652_002:0268b20_3": "不生無化。",
    "X35n0652_002:0268b20_4": "其化大焉。",
    "X35n0652_002:0268b21_0": "此明無化之大。",
    "X35n0652_002:0268b21_1": "昔曉法師論釋云。",
    "X35n0652_002:0268b21_2": "初句牒能化。",
    "X35n0652_002:0268b21_3": "後一句歎化大。",
    "X35n0652_002:0268b22_4": "中二句明正觀相。",
    "X35n0652_002:0268b22_5": "言無生於化者。",
    "X35n0652_002:0268b22_6": "初修觀時。",
    "X35n0652_002:0268b23_7": "破諸有相。",
    "X35n0652_002:0268b23_8": "於幻化相。",
    "X35n0652_002:0268b23_9": "滅其生心故。",
    "X35n0652_002:0268b23_10": "其不生無化者。",
    "X35n0652_002:0268b24_11": "復遣空於空。",
    "X35n0652_002:0268b24_12": "於無化空。",
    "X35n0652_002:0268b24_13": "亦不生心故。",
    "X35n0652_002:0268b24_14": "如金剛般若四生九類。",
    "X35n0652_002:0268c01_15": "皆令涅槃。",
    "X35n0652_002:0268c01_16": "實無眾生。",
    "X35n0652_002:0268c01_17": "得滅度者。",
    "X35n0652_002:0268c02_0": "亦如淨名。",
    "X35n0652_002:0268c02_1": "觀眾生如第六陰等。",
    "X35n0652_002:0268c02_2": "為一切眾生。",
    "X35n0652_002:0268c02_3": "說如斯法。",
    "X35n0652_002:0268c03_4": "名為真實慈也。",
    "X35n0652_002:0268c03_5": "觀此數語。",
    "X35n0652_002:0268c03_6": "終成義學見解。",
    "X35n0652_002:0268c03_7": "殊不知佛因解脫菩薩。",
    "X35n0652_002:0268c04_8": "既欲令後世眾生平等同得解脫。",
    "X35n0652_002:0268c05_9": "又恐其目前眾生之相未空。",
    "X35n0652_002:0268c05_10": "心中度生之念不忘。",
    "X35n0652_002:0268c06_11": "則令所化之眾生。",
    "X35n0652_002:0268c06_12": "亦皆著於相念。",
    "X35n0652_002:0268c06_13": "故先明化而無化之體。",
    "X35n0652_002:0268c07_14": "乃曰。",
    "X35n0652_002:0268c07_15": "汝若化於眾生。",
    "X35n0652_002:0268c07_16": "無自生於能化之心。",
    "X35n0652_002:0268c08_17": "若不生能化之心。",
    "X35n0652_002:0268c08_18": "亦無所化之眾。",
    "X35n0652_002:0268c08_19": "猶如天地長育萬物。",
    "X35n0652_002:0268c09_20": "而不以為功。",
    "X35n0652_002:0268c09_21": "則其化大焉。",
    "X35n0652_002:0268c09_22": "如華嚴經云。",
    "X35n0652_002:0268c10_0": "設一切眾生於一念中。",
    "X35n0652_002:0268c10_1": "悉成正覺。",
    "X35n0652_002:0268c10_2": "與不成正覺。",
    "X35n0652_002:0268c10_3": "亦無有異。",
    "X35n0652_002:0268c11_4": "何以故。",
    "X35n0652_002:0268c11_5": "菩提無相。",
    "X35n0652_002:0268c11_6": "無非相故。",
    "X35n0652_002:0268c11_7": "即般若亦云。",
    "X35n0652_002:0268c12_0": "若謂有一眾生得滅度。",
    "X35n0652_002:0268c12_1": "即非菩薩。",
    "X35n0652_002:0268c12_2": "此說方是明顯。",
    "X35n0652_002:0268c13_0": "所以百丈祖師示眾云。",
    "X35n0652_002:0268c13_1": "若道我能解能說。",
    "X35n0652_002:0268c13_2": "謂我是和尚。",
    "X35n0652_002:0268c14_3": "汝是弟子。",
    "X35n0652_002:0268c14_4": "者個即同於魔說。",
    "X35n0652_002:0268c14_5": "此真得於金剛三昧之義者矣。",
    "X35n0652_002:0268c16_0": "令彼眾生。",
    "X35n0652_002:0268c16_1": "皆離心我。",
    "X35n0652_002:0268c16_2": "一切心我。",
    "X35n0652_002:0268c16_3": "本來空寂。",
    "X35n0652_002:0268c16_4": "若得空心。",
    "X35n0652_002:0268c17_0": "心不幻化。",
    "X35n0652_002:0268c17_1": "無幻無化。",
    "X35n0652_002:0268c17_2": "即得無生。",
    "X35n0652_002:0268c17_3": "無生之心。",
    "X35n0652_002:0268c17_4": "在於無化。",
    "X35n0652_002:0268c18_0": "此言轉化之法。",
    "X35n0652_002:0268c18_1": "夫菩薩開化門以利生。",
    "X35n0652_002:0268c18_2": "必當先破其無明不覺之妄根。",
    "X35n0652_002:0268c19_3": "此只在心我二字。",
    "X35n0652_002:0268c19_4": "然眾生之心是妄心。",
    "X35n0652_002:0268c20_5": "而我亦是妄我。",
    "X35n0652_002:0268c20_6": "約起信論中。",
    "X35n0652_002:0268c20_7": "以依真如法。",
    "X35n0652_002:0268c21_8": "故有無明。",
    "X35n0652_002:0268c21_9": "為諸染因。",
    "X35n0652_002:0268c21_10": "即是業相。",
    "X35n0652_002:0268c21_11": "此從無明不覺。",
    "X35n0652_002:0268c22_0": "一念心動而成。",
    "X35n0652_002:0268c22_1": "以有無明染法因故。",
    "X35n0652_002:0268c22_2": "即熏習真如。",
    "X35n0652_002:0268c23_0": "故有妄心。",
    "X35n0652_002:0268c23_1": "即是轉相。",
    "X35n0652_002:0268c23_2": "此從一念之動。",
    "X35n0652_002:0268c23_3": "轉成能見之相。",
    "X35n0652_002:0268c24_4": "以有妄心。",
    "X35n0652_002:0268c24_5": "即熏習無明。",
    "X35n0652_002:0268c24_6": "不了真如法故。",
    "X35n0652_002:0268c24_7": "不覺起念。",
    "X35n0652_002:0269a01_8": "妄現境界。",
    "X35n0652_002:0269a01_9": "即是現相。",
    "X35n0652_002:0269a01_10": "乃依於能見。",
    "X35n0652_002:0269a01_11": "故有此塵境妄現。",
    "X35n0652_002:0269a02_12": "此以無明為因。",
    "X35n0652_002:0269a02_13": "不覺而生三細。",
    "X35n0652_002:0269a02_14": "又於此三細。",
    "X35n0652_002:0269a03_0": "不知因心所現。",
    "X35n0652_002:0269a03_1": "妄取染淨。",
    "X35n0652_002:0269a03_2": "依境分別。",
    "X35n0652_002:0269a03_3": "執以為常。",
    "X35n0652_002:0269a03_4": "此即法執俱生。",
    "X35n0652_002:0269a04_5": "名為智相。",
    "X35n0652_002:0269a04_6": "又依前境而起愛憎。",
    "X35n0652_002:0269a04_7": "念念不斷。",
    "X35n0652_002:0269a05_8": "此即法執分別。",
    "X35n0652_002:0269a05_9": "名相續相。",
    "X35n0652_002:0269a05_10": "依於相續而妄執著。",
    "X35n0652_002:0269a06_11": "計我我所。",
    "X35n0652_002:0269a06_12": "此即我執俱生。",
    "X35n0652_002:0269a06_13": "名執取相。",
    "X35n0652_002:0269a06_14": "依於妄執。",
    "X35n0652_002:0269a07_0": "分別假名。",
    "X35n0652_002:0269a07_1": "此即我執分別。",
    "X35n0652_002:0269a07_2": "名計名字相。",
    "X35n0652_002:0269a07_3": "眾生依此四相而起於惑。",
    "X35n0652_002:0269a08_4": "至於發動身口。",
    "X35n0652_002:0269a08_5": "造一切業。",
    "X35n0652_002:0269a08_6": "名起業相。",
    "X35n0652_002:0269a09_7": "依業受報。",
    "X35n0652_002:0269a09_8": "名業繫苦相。",
    "X35n0652_002:0269a09_9": "此是境界為緣長六粗。",
    "X35n0652_002:0269a10_0": "略而言之。",
    "X35n0652_002:0269a10_1": "依於染心一念之動。",
    "X35n0652_002:0269a10_2": "能見能現。",
    "X35n0652_002:0269a10_3": "是為三細。",
    "X35n0652_002:0269a11_4": "妄心取境。",
    "X35n0652_002:0269a11_5": "念念不斷。",
    "X35n0652_002:0269a11_6": "執我我所。",
    "X35n0652_002:0269a11_7": "分別假名。",
    "X35n0652_002:0269a11_8": "造業受報。",
    "X35n0652_002:0269a12_9": "是為六粗。",
    "X35n0652_002:0269a12_10": "此乃一切眾生妄心妄我之所由生也。",
    "X35n0652_002:0269a13_11": "若唯識中。",
    "X35n0652_002:0269a13_12": "止取熏習轉變而言。",
    "X35n0652_002:0269a13_13": "謂以前七為能熏。",
    "X35n0652_002:0269a14_14": "第八為所熏。",
    "X35n0652_002:0269a14_15": "第八為能變。",
    "X35n0652_002:0269a14_16": "第七為所變。",
    "X35n0652_002:0269a14_17": "前七相見現行熏第八。",
    "X35n0652_002:0269a15_18": "第八轉變相見二分種子。",
    "X35n0652_002:0269a15_19": "前五能熏第八相分種。",
    "X35n0652_002:0269a16_20": "第六能熏第八相見二分種。",
    "X35n0652_002:0269a16_21": "第七能熏第八見分種。",
    "X35n0652_002:0269a17_22": "故第八復變起前七現行。",
    "X35n0652_002:0269a17_23": "此則前七為現識之因。",
    "X35n0652_002:0269a18_24": "故頌云。",
    "X35n0652_002:0269a18_25": "以展轉力故。",
    "X35n0652_002:0269a18_26": "彼彼分別生也。",
    "X35n0652_002:0269a19_27": "然其能取種種塵者。",
    "X35n0652_002:0269a19_28": "悉由第八含藏前七種子。",
    "X35n0652_002:0269a20_29": "念念受熏。",
    "X35n0652_002:0269a20_30": "所以眼能見色。",
    "X35n0652_002:0269a20_31": "乃至意能取法。",
    "X35n0652_002:0269a20_32": "如外無六塵現行熏。",
    "X35n0652_002:0269a21_33": "內無無明種子熏。",
    "X35n0652_002:0269a21_34": "則眼等六識。",
    "X35n0652_002:0269a22_0": "不生心分別於六塵矣。",
    "X35n0652_002:0269a22_1": "由是觀之。",
    "X35n0652_002:0269a22_2": "葢性之所以為性。",
    "X35n0652_002:0269a23_3": "相之所以為相。",
    "X35n0652_002:0269a23_4": "豈不歷然而分於斯耶。",
    "X35n0652_002:0269a23_5": "但今佛之所說。",
    "X35n0652_002:0269a24_6": "性相俱泯。",
    "X35n0652_002:0269a24_7": "直顯真心。",
    "X35n0652_002:0269a24_8": "然真心無相。",
    "X35n0652_002:0269a24_9": "亦無實性。",
    "X35n0652_002:0269b01_10": "無性無相。",
    "X35n0652_002:0269b01_11": "是諸佛談心要訣。",
    "X35n0652_002:0269b01_12": "無相。",
    "X35n0652_002:0269b01_13": "則無妄我之可執。",
    "X35n0652_002:0269b02_14": "無性。",
    "X35n0652_002:0269b02_15": "則無妄心之可取。",
    "X35n0652_002:0269b02_16": "既無執無取。",
    "X35n0652_002:0269b02_17": "何有三細六粗。",
    "X35n0652_002:0269b03_18": "及熏習轉變之過患乎。",
    "X35n0652_002:0269b03_19": "如是。",
    "X35n0652_002:0269b03_20": "則可令彼眾生。",
    "X35n0652_002:0269b04_21": "皆離六塵緣影之心。",
    "X35n0652_002:0269b04_22": "與四大幻質之我矣。",
    "X35n0652_002:0269b04_23": "雖眾生以心為我義。",
    "X35n0652_002:0269b05_24": "須知此一切虗妄心我。",
    "X35n0652_002:0269b05_25": "其體本來空寂。",
    "X35n0652_002:0269b06_26": "若得此空寂心體。",
    "X35n0652_002:0269b06_27": "則知此心不同於幻化矣。",
    "X35n0652_002:0269b07_0": "且余觀過去七佛偈。",
    "X35n0652_002:0269b07_1": "皆發明幻化無相無生之義。",
    "X35n0652_002:0269b08_0": "即迦文本師。",
    "X35n0652_002:0269b08_1": "亦云幻化無因亦無生。",
    "X35n0652_002:0269b08_2": "皆即自然見如是。",
    "X35n0652_002:0269b09_3": "諸法無非自化生。",
    "X35n0652_002:0269b09_4": "幻化無生無所畏。",
    "X35n0652_002:0269b09_5": "其義亦同。",
    "X35n0652_002:0269b10_6": "今此而言心不幻化。",
    "X35n0652_002:0269b10_7": "則直指心體。",
    "X35n0652_002:0269b10_8": "其意更深。",
    "X35n0652_002:0269b10_9": "若人果能知此無幻無化之心體。",
    "X35n0652_002:0269b11_10": "則一切法。",
    "X35n0652_002:0269b11_11": "無生滅相之可得。",
    "X35n0652_002:0269b12_12": "如是即得無生。",
    "X35n0652_002:0269b12_13": "然無生之心者。",
    "X35n0652_002:0269b12_14": "只在於無能化所化之心耳。",
    "X35n0652_002:0269b13_15": "此章。",
    "X35n0652_002:0269b13_16": "先開陳無生行品。",
    "X35n0652_002:0269b13_17": "為心王菩薩。",
    "X35n0652_002:0269b14_18": "問無生法忍之張本也。",
    "X35n0652_002:0269b15_0": "解脫菩薩而白佛言。",
    "X35n0652_002:0269b15_1": "尊者。",
    "X35n0652_002:0269b15_2": "眾生之心。",
    "X35n0652_002:0269b15_3": "性本空寂。",
    "X35n0652_002:0269b15_4": "空寂之心。",
    "X35n0652_002:0269b16_5": "體無色相。",
    "X35n0652_002:0269b16_6": "云何修習。",
    "X35n0652_002:0269b16_7": "得本空心。",
    "X35n0652_002:0269b16_8": "願佛慈悲。",
    "X35n0652_002:0269b16_9": "為我宣說。",
    "X35n0652_002:0269b18_0": "此問修習之要。",
    "X35n0652_002:0269b18_1": "發起本覺利品。",
    "X35n0652_002:0269b18_2": "言心性體空者。",
    "X35n0652_002:0269b18_3": "即眾生之本覺也。",
    "X35n0652_002:0269b19_4": "得本空心者。",
    "X35n0652_002:0269b19_5": "諸佛始覺。",
    "X35n0652_002:0269b19_6": "乃本覺之利也。",
    "X35n0652_002:0269b21_0": "佛言。",
    "X35n0652_002:0269b21_1": "菩薩。",
    "X35n0652_002:0269b21_2": "一切心相。",
    "X35n0652_002:0269b21_3": "本來無本。",
    "X35n0652_002:0269b21_4": "本無本處。",
    "X35n0652_002:0269b21_5": "空寂無生。",
    "X35n0652_002:0269b22_0": "若心無生。",
    "X35n0652_002:0269b22_1": "即入空寂。",
    "X35n0652_002:0269b22_2": "空寂心地。",
    "X35n0652_002:0269b22_3": "即得心空。",
    "X35n0652_002:0269b22_4": "善男子。",
    "X35n0652_002:0269b22_5": "無相之心。",
    "X35n0652_002:0269b23_6": "無心無我。",
    "X35n0652_002:0269b23_7": "一切法相。",
    "X35n0652_002:0269b23_8": "亦復如是。",
    "X35n0652_002:0269b24_0": "此示心空之義。",
    "X35n0652_002:0269b24_1": "然解脫問其體。",
    "X35n0652_002:0269b24_2": "佛答之以相。",
    "X35n0652_002:0269b24_3": "葢欲得心空。",
    "X35n0652_002:0269c01_4": "先當明其相也。",
    "X35n0652_002:0269c01_5": "如楞伽經云。",
    "X35n0652_002:0269c01_6": "諸識有三種相。",
    "X35n0652_002:0269c02_7": "謂轉相業相真相也。",
    "X35n0652_002:0269c02_8": "夫不生滅者名真識。",
    "X35n0652_002:0269c02_9": "而相名真相。",
    "X35n0652_002:0269c03_10": "第八名業識。",
    "X35n0652_002:0269c03_11": "而相名業相。",
    "X35n0652_002:0269c03_12": "依無明力。",
    "X35n0652_002:0269c03_13": "不覺心動故。",
    "X35n0652_002:0269c04_14": "前七名轉識。",
    "X35n0652_002:0269c04_15": "而相名轉相。",
    "X35n0652_002:0269c04_16": "依於動心。",
    "X35n0652_002:0269c04_17": "能見相故。",
    "X35n0652_002:0269c05_18": "又此轉相有二。",
    "X35n0652_002:0269c05_19": "若就無明所動。",
    "X35n0652_002:0269c05_20": "轉成能見者。",
    "X35n0652_002:0269c06_0": "在本識中。",
    "X35n0652_002:0269c06_1": "若為境界所動。",
    "X35n0652_002:0269c06_2": "轉成能見者。",
    "X35n0652_002:0269c06_3": "在事識中。",
    "X35n0652_002:0269c07_0": "此三種相。",
    "X35n0652_002:0269c07_1": "是一切法相之根本。",
    "X35n0652_002:0269c07_2": "而又通乎八識。",
    "X35n0652_002:0269c07_3": "凡一起心即是轉。",
    "X35n0652_002:0269c08_4": "八識皆起。",
    "X35n0652_002:0269c08_5": "皆有生滅。",
    "X35n0652_002:0269c08_6": "又心動即是業。",
    "X35n0652_002:0269c09_7": "八識皆動。",
    "X35n0652_002:0269c09_8": "又八之真性。",
    "X35n0652_002:0269c09_9": "俱名真相。",
    "X35n0652_002:0269c09_10": "故曰通乎八識。",
    "X35n0652_002:0269c10_11": "又業相統於六粗。",
    "X35n0652_002:0269c10_12": "轉相通於三細。",
    "X35n0652_002:0269c10_13": "此業轉二相。",
    "X35n0652_002:0269c11_0": "有二種生住滅。",
    "X35n0652_002:0269c11_1": "而真相無生住滅也。",
    "X35n0652_002:0269c11_2": "又諸識皆依相而轉。",
    "X35n0652_002:0269c12_3": "展轉為因者也。",
    "X35n0652_002:0269c12_4": "葢依真相而轉業相。",
    "X35n0652_002:0269c12_5": "即第八識。",
    "X35n0652_002:0269c13_6": "依業相而轉轉相。",
    "X35n0652_002:0269c13_7": "即第七識。",
    "X35n0652_002:0269c13_8": "依轉相而轉現相。",
    "X35n0652_002:0269c14_9": "即前五識。",
    "X35n0652_002:0269c14_10": "復轉現相而成六粗之相。",
    "X35n0652_002:0269c14_11": "即分別事識。",
    "X35n0652_002:0269c15_12": "此起信論中義。",
    "X35n0652_002:0269c15_13": "若明此法相之根本。",
    "X35n0652_002:0269c15_14": "一切過患不生。",
    "X35n0652_002:0269c16_15": "當體空寂。",
    "X35n0652_002:0269c16_16": "所以云。",
    "X35n0652_002:0269c16_17": "一切心相。",
    "X35n0652_002:0269c16_18": "本來無有本之可得。",
    "X35n0652_002:0269c17_19": "此本亦無本之處所。",
    "X35n0652_002:0269c17_20": "如是。",
    "X35n0652_002:0269c17_21": "則其心空寂。",
    "X35n0652_002:0269c17_22": "而無有生矣。",
    "X35n0652_002:0269c18_23": "若心既無有生。",
    "X35n0652_002:0269c18_24": "即入於空寂。",
    "X35n0652_002:0269c18_25": "既入於空寂心地中。",
    "X35n0652_002:0269c19_26": "即自得其心空之妙。",
    "X35n0652_002:0269c19_27": "然此心空。",
    "X35n0652_002:0269c19_28": "即是無相之心體。",
    "X35n0652_002:0269c20_29": "而實無心之可取。",
    "X35n0652_002:0269c20_30": "亦無我之可執也。",
    "X35n0652_002:0269c20_31": "故禪宗有言。",
    "X35n0652_002:0269c21_32": "心不空則不悟。",
    "X35n0652_002:0269c21_33": "又曰。",
    "X35n0652_002:0269c21_34": "但得心空境自空。",
    "X35n0652_002:0269c21_35": "智者除心不除境。",
    "X35n0652_002:0269c22_36": "又云。",
    "X35n0652_002:0269c22_37": "若入我門來。",
    "X35n0652_002:0269c22_38": "祇要將平生是非得失。",
    "X35n0652_002:0269c23_39": "善惡取捨。",
    "X35n0652_002:0269c23_40": "及見覺聞知。",
    "X35n0652_002:0269c23_41": "與有無生滅等見。",
    "X35n0652_002:0269c24_0": "盡底放下。",
    "X35n0652_002:0269c24_1": "直放到無可放處。",
    "X35n0652_002:0269c24_2": "自然直下頓證諸佛心體。",
    "X35n0652_002:0270a01_3": "正所謂選佛場中心空及第。",
    "X35n0652_002:0270a01_4": "此先開陳本覺利品。",
    "X35n0652_002:0270a02_5": "無住菩薩我從無本來。",
    "X35n0652_002:0270a02_6": "今至無本所。",
    "X35n0652_002:0270a02_7": "而為張本也。",
    "X35n0652_002:0270a04_0": "解脫菩薩而白佛言。",
    "X35n0652_002:0270a04_1": "尊者。",
    "X35n0652_002:0270a04_2": "一切眾生。",
    "X35n0652_002:0270a04_3": "若有我者。",
    "X35n0652_002:0270a04_4": "若有心者。",
    "X35n0652_002:0270a05_5": "以何法覺。",
    "X35n0652_002:0270a05_6": "令彼眾生。",
    "X35n0652_002:0270a05_7": "出離斯縛。",
    "X35n0652_002:0270a06_0": "此問離縛之法。",
    "X35n0652_002:0270a06_1": "發起入實際義。",
    "X35n0652_002:0270a06_2": "然前問修習。",
    "X35n0652_002:0270a06_3": "從諸佛真如門立。",
    "X35n0652_002:0270a07_4": "此問離縛。",
    "X35n0652_002:0270a07_5": "從眾生生滅門起。",
    "X35n0652_002:0270a07_6": "所言我者。",
    "X35n0652_002:0270a08_7": "如起信中。",
    "X35n0652_002:0270a08_8": "由第七內執第八為我。",
    "X35n0652_002:0270a08_9": "又因真如隨緣而成第八。",
    "X35n0652_002:0270a09_10": "因第八一轉。",
    "X35n0652_002:0270a09_11": "而成能見為第七。",
    "X35n0652_002:0270a09_12": "因第七而生前五識。",
    "X35n0652_002:0270a10_13": "因前五復引生第六也。",
    "X35n0652_002:0270a10_14": "若成唯識論。",
    "X35n0652_002:0270a11_15": "以第七執第八見分。",
    "X35n0652_002:0270a11_16": "為實我實法。",
    "X35n0652_002:0270a11_17": "第六執第八見相二分。",
    "X35n0652_002:0270a12_18": "為實我實法。",
    "X35n0652_002:0270a12_19": "故曰六七二識。",
    "X35n0652_002:0270a12_20": "深生計著。",
    "X35n0652_002:0270a13_0": "又以我執必依法執起。",
    "X35n0652_002:0270a13_1": "故曰六七二識。",
    "X35n0652_002:0270a13_2": "二執俱生。",
    "X35n0652_002:0270a14_0": "以先執法而為實有。",
    "X35n0652_002:0270a14_1": "故有我執。",
    "X35n0652_002:0270a14_2": "而施設我法。",
    "X35n0652_002:0270a14_3": "如四大非我以為我。",
    "X35n0652_002:0270a15_4": "緣慮生滅以為心。",
    "X35n0652_002:0270a15_5": "此二是我執。",
    "X35n0652_002:0270a15_6": "四大如幻。",
    "X35n0652_002:0270a16_7": "本無而見為有。",
    "X35n0652_002:0270a16_8": "緣慮生滅之相。",
    "X35n0652_002:0270a16_9": "如影而執為實。",
    "X35n0652_002:0270a17_10": "此二是法執。",
    "X35n0652_002:0270a17_11": "乃眾生之四倒見。",
    "X35n0652_002:0270a17_12": "因而有三界生死之縛。",
    "X35n0652_002:0270a18_13": "只為以真我之本有。",
    "X35n0652_002:0270a18_14": "迷而謂無。",
    "X35n0652_002:0270a18_15": "妄我之本空。",
    "X35n0652_002:0270a19_16": "執而為有也。",
    "X35n0652_002:0270a19_17": "教中欲為眾生除此二執。",
    "X35n0652_002:0270a19_18": "費若干言論。",
    "X35n0652_002:0270a20_19": "其奈藥多病甚。",
    "X35n0652_002:0270a20_20": "今時若有人問。",
    "X35n0652_002:0270a20_21": "未審以何法出離。",
    "X35n0652_002:0270a21_22": "只對他道。",
    "X35n0652_002:0270a21_23": "快向父母未生前。",
    "X35n0652_002:0270a21_24": "道取一句來。",
    "X35n0652_002:0270a22_0": "若眼目定動。",
    "X35n0652_002:0270a22_1": "劈脊便打。",
    "X35n0652_002:0270a22_2": "他後自有透脫分。",
    "X35n0652_002:0270a23_0": "佛言。",
    "X35n0652_002:0270a23_1": "善男子。",
    "X35n0652_002:0270a23_2": "若有我者。",
    "X35n0652_002:0270a23_3": "令觀十二因緣。",
    "X35n0652_002:0270a23_4": "十二因緣。",
    "X35n0652_002:0270a23_5": "本從因果。",
    "X35n0652_002:0270a24_6": "因果所起。",
    "X35n0652_002:0270a24_7": "興於心行。",
    "X35n0652_002:0270a24_8": "心尚不有。",
    "X35n0652_002:0270a24_9": "何況有身。",
    "X35n0652_002:0270b01_0": "此示因緣本空之義。",
    "X35n0652_002:0270b01_1": "言我法本無。",
    "X35n0652_002:0270b01_2": "皆由一念無明。",
    "X35n0652_002:0270b02_0": "迷背自心。",
    "X35n0652_002:0270b02_1": "妄執為有。",
    "X35n0652_002:0270b02_2": "而以內識為因。",
    "X35n0652_002:0270b02_3": "外境為緣。",
    "X35n0652_002:0270b02_4": "相合共起。",
    "X35n0652_002:0270b03_5": "祇於一念中。",
    "X35n0652_002:0270b03_6": "具攝十二因緣法。",
    "X35n0652_002:0270b03_7": "初因眼見色而生愛。",
    "X35n0652_002:0270b04_8": "此即是無明心。",
    "X35n0652_002:0270b04_9": "因愛造業是行。",
    "X35n0652_002:0270b04_10": "此心專念是識。",
    "X35n0652_002:0270b05_11": "識共色行曰名色。",
    "X35n0652_002:0270b05_12": "六處生貪為入。",
    "X35n0652_002:0270b05_13": "因入求愛是觸。",
    "X35n0652_002:0270b06_14": "貪著心是受。",
    "X35n0652_002:0270b06_15": "纏綿不捨為愛。",
    "X35n0652_002:0270b06_16": "求所受法是取。",
    "X35n0652_002:0270b07_17": "法從心生名有。",
    "X35n0652_002:0270b07_18": "次第不斷為生。",
    "X35n0652_002:0270b07_19": "次第斷為死。",
    "X35n0652_002:0270b07_20": "又次第而成。",
    "X35n0652_002:0270b08_21": "三世相續。",
    "X35n0652_002:0270b08_22": "如無明行是過去因。",
    "X35n0652_002:0270b08_23": "識名色六入觸受。",
    "X35n0652_002:0270b09_24": "是現在果。",
    "X35n0652_002:0270b09_25": "愛取有是現在因。",
    "X35n0652_002:0270b09_26": "生老死是未來果。",
    "X35n0652_002:0270b10_27": "又識名色六入觸受生老死是苦諦。",
    "X35n0652_002:0270b10_28": "無明行愛取有是集諦。",
    "X35n0652_002:0270b11_29": "即是見思二惑。",
    "X35n0652_002:0270b11_30": "又名四住地煩惱。",
    "X35n0652_002:0270b12_31": "四住者(開思合見)。",
    "X35n0652_002:0270b12_32": "見惑為一。",
    "X35n0652_002:0270b12_33": "思惑分三。",
    "X35n0652_002:0270b12_34": "見惑為一者。",
    "X35n0652_002:0270b13_0": "謂見一切處住地。",
    "X35n0652_002:0270b13_1": "即是見三界八十八使。",
    "X35n0652_002:0270b13_2": "然八十八使。",
    "X35n0652_002:0270b14_3": "只從十使中出(開見合思。",
    "X35n0652_002:0270b14_4": "見八十八使思十使。",
    "X35n0652_002:0270b14_5": "共九十八使)。",
    "X35n0652_002:0270b14_6": "妄計為身有身見。",
    "X35n0652_002:0270b15_7": "執斷執常有邊見。",
    "X35n0652_002:0270b15_8": "以見為是有見取執取邪戒有戒取。",
    "X35n0652_002:0270b16_9": "以邪自執有邪見。",
    "X35n0652_002:0270b16_10": "此為五利使。",
    "X35n0652_002:0270b17_0": "眾生妄認四大為身。",
    "X35n0652_002:0270b17_1": "即是身見。",
    "X35n0652_002:0270b17_2": "知身是幻。",
    "X35n0652_002:0270b17_3": "則身見斷。",
    "X35n0652_002:0270b18_4": "身見斷則邊邪二取自除。",
    "X35n0652_002:0270b18_5": "此四皆從身見起故。",
    "X35n0652_002:0270b19_0": "又同於己法者則愛。",
    "X35n0652_002:0270b19_1": "是貪。",
    "X35n0652_002:0270b19_2": "非己法則嗔。",
    "X35n0652_002:0270b19_3": "不知見惑即是集諦。",
    "X35n0652_002:0270b20_4": "能招集生死是癡。",
    "X35n0652_002:0270b20_5": "自謂我解他不解。",
    "X35n0652_002:0270b20_6": "是慢。",
    "X35n0652_002:0270b21_7": "猶豫不決。",
    "X35n0652_002:0270b21_8": "是疑。",
    "X35n0652_002:0270b21_9": "此為五鈍使。",
    "X35n0652_002:0270b21_10": "然利使若去。",
    "X35n0652_002:0270b21_11": "鈍使亦亡。",
    "X35n0652_002:0270b22_12": "以其推利使方生故。",
    "X35n0652_002:0270b22_13": "眾生因此十使。",
    "X35n0652_002:0270b22_14": "驅役心神。",
    "X35n0652_002:0270b23_15": "以致輪迴六道。",
    "X35n0652_002:0270b23_16": "又此十使。",
    "X35n0652_002:0270b23_17": "歷三界四諦下。",
    "X35n0652_002:0270b23_18": "有增有減。",
    "X35n0652_002:0270b24_19": "合為八十八使。",
    "X35n0652_002:0270b24_20": "茲不及備舉。",
    "X35n0652_002:0270b24_21": "須知此見惑。",
    "X35n0652_002:0270b24_22": "從法塵起。",
    "X35n0652_002:0270c01_23": "能障真性。",
    "X35n0652_002:0270c01_24": "若見性明心。",
    "X35n0652_002:0270c01_25": "則能截斷意根。",
    "X35n0652_002:0270c01_26": "自不被其所驅使。",
    "X35n0652_002:0270c02_27": "故見道斷見惑。",
    "X35n0652_002:0270c02_28": "又思惑分三。",
    "X35n0652_002:0270c02_29": "一欲愛住地。",
    "X35n0652_002:0270c03_30": "即欲界。",
    "X35n0652_002:0270c03_31": "有貪嗔癡慢九品思。",
    "X35n0652_002:0270c03_32": "二色愛住地。",
    "X35n0652_002:0270c04_0": "即色界四地。",
    "X35n0652_002:0270c04_1": "三無色愛住地。",
    "X35n0652_002:0270c04_2": "即無色界四地。",
    "X35n0652_002:0270c04_3": "各有貪癡慢九品思。",
    "X35n0652_002:0270c05_4": "祇除嗔習已斷。",
    "X35n0652_002:0270c05_5": "九品。",
    "X35n0652_002:0270c05_6": "上中下品。",
    "X35n0652_002:0270c05_7": "每品具三。",
    "X35n0652_002:0270c06_8": "故有九品。",
    "X35n0652_002:0270c06_9": "共成八十一品。",
    "X35n0652_002:0270c06_10": "此見思俱開(見八十八使。",
    "X35n0652_002:0270c07_11": "思八十一品)。",
    "X35n0652_002:0270c07_12": "總是三界九地中。",
    "X35n0652_002:0270c07_13": "然此思惑從五塵起。",
    "X35n0652_002:0270c08_0": "眾生因思惑。",
    "X35n0652_002:0270c08_1": "為三界生死纏縛。",
    "X35n0652_002:0270c08_2": "若見道復修道。",
    "X35n0652_002:0270c08_3": "便於色聲香味觸。",
    "X35n0652_002:0270c09_4": "永無繫思。",
    "X35n0652_002:0270c09_5": "故修道斷思惑。",
    "X35n0652_002:0270c09_6": "此二惑俱以無明為根本。",
    "X35n0652_002:0270c10_7": "潤有漏業。",
    "X35n0652_002:0270c10_8": "若以修道是務。",
    "X35n0652_002:0270c10_9": "雖不求斷而見思自隕也。",
    "X35n0652_002:0270c11_10": "若觀無明滅等。",
    "X35n0652_002:0270c11_11": "是滅諦。",
    "X35n0652_002:0270c11_12": "對治因緣方便。",
    "X35n0652_002:0270c12_13": "是道諦。",
    "X35n0652_002:0270c12_14": "苦集。",
    "X35n0652_002:0270c12_15": "是世間因果。",
    "X35n0652_002:0270c12_16": "道滅。",
    "X35n0652_002:0270c12_17": "是出世間因果。",
    "X35n0652_002:0270c13_18": "然別說。",
    "X35n0652_002:0270c13_19": "名十二因緣。",
    "X35n0652_002:0270c13_20": "總說。",
    "X35n0652_002:0270c13_21": "即四諦。",
    "X35n0652_002:0270c13_22": "開合異耳。",
    "X35n0652_002:0270c14_23": "如聲聞。",
    "X35n0652_002:0270c14_24": "聞佛聲教。",
    "X35n0652_002:0270c14_25": "依四諦。",
    "X35n0652_002:0270c14_26": "觀苦諦為初門。",
    "X35n0652_002:0270c14_27": "緣覺緣十二因緣而覺。",
    "X35n0652_002:0270c15_28": "觀集諦為初門。",
    "X35n0652_002:0270c15_29": "菩薩以道滅二諦為初門。",
    "X35n0652_002:0270c16_30": "又大涅槃經云。",
    "X35n0652_002:0270c16_31": "此十二因緣法。",
    "X35n0652_002:0270c16_32": "下智觀之。",
    "X35n0652_002:0270c17_33": "得聲聞菩提。",
    "X35n0652_002:0270c17_34": "中智觀之。",
    "X35n0652_002:0270c17_35": "得緣覺菩提。",
    "X35n0652_002:0270c17_36": "上智觀之。",
    "X35n0652_002:0270c18_0": "得菩薩菩提。",
    "X35n0652_002:0270c18_1": "上上智觀之。",
    "X35n0652_002:0270c18_2": "得佛菩提。",
    "X35n0652_002:0270c18_3": "是皆隨根器大小而得也。",
    "X35n0652_002:0270c19_4": "然觀此因緣之法。",
    "X35n0652_002:0270c19_5": "皆從無明不覺之妄心。",
    "X35n0652_002:0270c20_6": "而以興起。",
    "X35n0652_002:0270c20_7": "若妄心滅。",
    "X35n0652_002:0270c20_8": "我見亦滅。",
    "X35n0652_002:0270c20_9": "故曰心尚不有。",
    "X35n0652_002:0270c21_10": "何況有身。",
    "X35n0652_002:0270c21_11": "宗門則又不然。",
    "X35n0652_002:0270c21_12": "汝今此身。",
    "X35n0652_002:0270c21_13": "四大本空。",
    "X35n0652_002:0270c22_0": "五陰非有。",
    "X35n0652_002:0270c22_1": "心性假名。",
    "X35n0652_002:0270c22_2": "將甚麼喚作我。",
    "X35n0652_002:0270c22_3": "只消如此一問。",
    "X35n0652_002:0270c23_4": "自然氷消瓦解。",
    "X35n0652_002:0270c24_0": "若有我者。",
    "X35n0652_002:0270c24_1": "令滅有見。",
    "X35n0652_002:0270c24_2": "若無我者。",
    "X35n0652_002:0270c24_3": "令滅無見。",
    "X35n0652_002:0270c24_4": "若心生者。",
    "X35n0652_002:0271a01_0": "令滅生性。",
    "X35n0652_002:0271a01_1": "若心滅者。",
    "X35n0652_002:0271a01_2": "令滅滅性。",
    "X35n0652_002:0271a01_3": "滅是見性。",
    "X35n0652_002:0271a01_4": "即入實際。",
    "X35n0652_002:0271a02_0": "此言對治方便以明實際。",
    "X35n0652_002:0271a02_1": "有我滅有。",
    "X35n0652_002:0271a02_2": "無我滅無。",
    "X35n0652_002:0271a02_3": "則有無二見。",
    "X35n0652_002:0271a03_4": "俱不立矣。",
    "X35n0652_002:0271a03_5": "然我見雖除。",
    "X35n0652_002:0271a03_6": "而心法未泯。",
    "X35n0652_002:0271a03_7": "若心生則法亦生。",
    "X35n0652_002:0271a04_8": "心滅則法亦滅。",
    "X35n0652_002:0271a04_9": "以故心若生。",
    "X35n0652_002:0271a04_10": "即滅生性。",
    "X35n0652_002:0271a05_11": "心若滅。",
    "X35n0652_002:0271a05_12": "即滅滅性。",
    "X35n0652_002:0271a05_13": "如是則斷滅二性。",
    "X35n0652_002:0271a05_14": "亦俱不存矣。",
    "X35n0652_002:0271a06_15": "若滅此有無二見。",
    "X35n0652_002:0271a06_16": "生滅二性。",
    "X35n0652_002:0271a06_17": "則心同虗空。",
    "X35n0652_002:0271a06_18": "身等法界。",
    "X35n0652_002:0271a07_19": "而入於實際矣。",
    "X35n0652_002:0271a07_20": "此與入實際品為張本也。",
    "X35n0652_002:0271a08_0": "何以故。",
    "X35n0652_002:0271a08_1": "本生不滅。",
    "X35n0652_002:0271a08_2": "本滅不生。",
    "X35n0652_002:0271a08_3": "不滅不生。",
    "X35n0652_002:0271a08_4": "不生不滅。",
    "X35n0652_002:0271a08_5": "一切法相。",
    "X35n0652_002:0271a09_6": "亦復如是。",
    "X35n0652_002:0271a10_0": "此徵明實際之義。",
    "X35n0652_002:0271a10_1": "葢本生自不滅者。",
    "X35n0652_002:0271a10_2": "謂其性真常。",
    "X35n0652_002:0271a11_0": "無滅可滅也。",
    "X35n0652_002:0271a11_1": "本滅亦不生者。",
    "X35n0652_002:0271a11_2": "謂其性空寂。",
    "X35n0652_002:0271a11_3": "無生可生也。",
    "X35n0652_002:0271a12_4": "如此。",
    "X35n0652_002:0271a12_5": "則一切法相。",
    "X35n0652_002:0271a12_6": "莫不皆然。",
    "X35n0652_002:0271a12_7": "既不滅。",
    "X35n0652_002:0271a12_8": "亦不有生。",
    "X35n0652_002:0271a13_9": "既不生。",
    "X35n0652_002:0271a13_10": "亦不有滅。",
    "X35n0652_002:0271a13_11": "而性相如如之體。",
    "X35n0652_002:0271a13_12": "固如是也。",
    "X35n0652_002:0271a14_0": "音釋",
    "X35n0652_002:0271a15_0": "摧(摧上聲折抑也)。",
    "X35n0652_002:0271a15_1": "劇(音極。",
    "X35n0652_002:0271a15_2": "尤甚也)。",
    "X35n0652_002:0271a15_3": "滓(音子。",
    "X35n0652_002:0271a15_4": "濁也)。",
    "X35n0652_002:0271a15_5": "恚(音惠。",
    "X35n0652_002:0271a15_6": "怒也)。",
    "X35n0652_002:0271a15_7": "蜃(辰上聲。",
    "X35n0652_002:0271a15_8": "大蛤也。",
    "X35n0652_002:0271a15_9": "雉入海所化。",
    "X35n0652_002:0271a16_10": "能吐氣。",
    "X35n0652_002:0271a16_11": "化為樓臺)。",
    "X35n0652_002:0271a16_12": "牒(判也)。",
    "X35n0652_002:0271a16_13": "豫(音裕。",
    "X35n0652_002:0271a16_14": "猶豫獸名。",
    "X35n0652_002:0271a16_15": "性多疑者)。",
    "X35n0652_002:0271a16_16": "隕(音允。",
    "X35n0652_002:0271a16_17": "亡也墜也)。",
    "X35n0652_002:0271a18_0": "金剛三昧經通宗記卷第二"
}