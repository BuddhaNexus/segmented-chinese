[
    {
        "source_sentence": "5佛說一切如來真實攝大乘現證",
        "from": "T18n0882_005:0352b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧大教王經卷第五",
        "from": "T18n0882_005:0352b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T18n0882_005:0352b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師賜紫沙門臣施護等奉　詔譯金剛界大曼拏羅廣大儀軌分第一之五爾時，具德持金剛者聞諸如來勸請語已，即入一切如來三昧，出生金剛加持三摩地，說此金剛界大曼拏羅頌曰：",
        "from": "T18n0882_005:0352b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次我今當演說，　　最上廣大曼拏羅，",
        "from": "T18n0882_005:0352b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相猶如金剛界，　　是故名為金剛界。",
        "from": "T18n0882_005:0352b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如教次第應安立，　　曼拏羅中諸相分，",
        "from": "T18n0882_005:0352b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以大薩埵大印，　　普遍加持作觀想。",
        "from": "T18n0882_005:0352b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於前印處即當起，　　如理觀視於諸方，",
        "from": "T18n0882_005:0352b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以高舉相次第行，　　金剛薩埵應念誦。",
        "from": "T18n0882_005:0352b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應取新線堅妙合，　　稱其分量而善用，",
        "from": "T18n0882_005:0352b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人持線以抨量，　　隨力應作曼拏羅。",
        "from": "T18n0882_005:0352b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其壇四方及四門，　　復以四剎而嚴飾，",
        "from": "T18n0882_005:0352b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以四線而交絡，　　繒帛妙線等莊嚴。",
        "from": "T18n0882_005:0352b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其四隅諸分位，　　及諸門戶相合處，",
        "from": "T18n0882_005:0352b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各鈿飾金剛寶，　　次第抨外曼拏羅。",
        "from": "T18n0882_005:0352b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外壇中心如輪相，　　復次漸入於中宮，",
        "from": "T18n0882_005:0352b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛線善抨量，　　設以八柱而間飾。",
        "from": "T18n0882_005:0352b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼金剛勝住處，　　而復飾以五輪壇，",
        "from": "T18n0882_005:0352b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是所立輪壇中，　　如教安立佛形像，",
        "from": "T18n0882_005:0352b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼中心曼拏羅，　　佛像周圍當安布，",
        "from": "T18n0882_005:0352c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四勝三昧邪印契，　　如其次第應圖畫。",
        "from": "T18n0882_005:0352c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛步而漸進，　　次第安四曼拏羅，",
        "from": "T18n0882_005:0352c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂阿閦佛等四，　　一切佛像皆安立，",
        "from": "T18n0882_005:0352c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先畫阿閦曼拏羅，　　持金剛等眾齊等，",
        "from": "T18n0882_005:0352c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次畫寶生曼拏羅，　　金剛藏等眾圓滿，",
        "from": "T18n0882_005:0352c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次無量壽曼拏羅，　　金剛眼等眾清淨，",
        "from": "T18n0882_005:0352c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空成就曼拏羅，　　金剛巧業等應畫。",
        "from": "T18n0882_005:0352c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於內輪壇諸隅分，　　當畫金剛明妃眾，",
        "from": "T18n0882_005:0352c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其外輪壇四隅處，　　應畫佛供養等四，",
        "from": "T18n0882_005:0352c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後於彼四門中，　　安四護門大明王。",
        "from": "T18n0882_005:0352c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復於外輪壇處，　　各應安立大薩埵，",
        "from": "T18n0882_005:0352c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後如其本部儀，　　結勝三昧邪印契。",
        "from": "T18n0882_005:0352c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛阿闍梨入已，　　開印普遍為驚覺，",
        "from": "T18n0882_005:0352c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦金剛警覺心，　　阿字是為所教令，",
        "from": "T18n0882_005:0352c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作自加持稱自名，　　然後金剛作成就。",
        "from": "T18n0882_005:0352c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛阿闍梨次結，　　薩埵金剛鉤召印，",
        "from": "T18n0882_005:0352c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作彈指遍警覺，　　召請一切佛菩薩，",
        "from": "T18n0882_005:0352c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即剎那間一切佛，　　金剛薩埵同集會，",
        "from": "T18n0882_005:0352c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿一切曼拏羅，　　普遍召請咸來集。",
        "from": "T18n0882_005:0352c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後次應結大印，　　金剛薩埵乃親近，",
        "from": "T18n0882_005:0352c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍應誦百八名，　　依法次第而稱讚。",
        "from": "T18n0882_005:0352c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既集會已施歡喜，　　一切如來悉堅固，",
        "from": "T18n0882_005:0352c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵本法成，　　作大慈友而安住。",
        "from": "T18n0882_005:0352c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後於其四門處，　　金剛鉤等應作法，",
        "from": "T18n0882_005:0352c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝大羯磨印等作，　　以三昧法而安立，",
        "from": "T18n0882_005:0352c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝三昧邪等諸印，　　薩埵金剛等亦然，",
        "from": "T18n0882_005:0352c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應誦惹吽鑁呼明，　　求大薩埵法成就。",
        "from": "T18n0882_005:0352c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後佛等一切眾，　　并大薩埵咸集會，",
        "from": "T18n0882_005:0352c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法鉤召即遍入，　　悉得相應而敬愛。",
        "from": "T18n0882_005:0353a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然作祕密供養事，　　諸大我者悉歡喜，",
        "from": "T18n0882_005:0353a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如教利益諸眾生，　　能作一切成就事。",
        "from": "T18n0882_005:0353a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切曼拏羅，　　於中所有諸法用，",
        "from": "T18n0882_005:0353a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即金剛阿闍梨，　　如教所作諸事業。",
        "from": "T18n0882_005:0353a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，宣說金剛界中諸曼拏羅所有弟子入壇法等廣大儀軌。",
        "from": "T18n0882_005:0353a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今先說彼弟子入曼拏羅儀。",
        "from": "T18n0882_005:0353a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸欲入者，謂應先於普遍無餘諸有情界起救護心，悉令獲得適悅快樂，及得一切最上悉地。",
        "from": "T18n0882_005:0353a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有入此大曼拏羅者，不應揀擇是器非器。",
        "from": "T18n0882_005:0353a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T18n0882_005:0353a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊！",
        "from": "T18n0882_005:0353a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂有有情造大罪業，彼或於此大曼拏羅見已入己，即得當離一切惡趣。",
        "from": "T18n0882_005:0353a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T18n0882_005:0353a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有有情，受諸飲食五欲娛樂，世間義利堅著不捨，即以此世間之法而為先行，但能於此曼拏羅中隨欲所作，亦得一切意願圓滿。",
        "from": "T18n0882_005:0353a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T18n0882_005:0353a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有有情，愛樂戲笑歌舞飲食快樂等事，又復於此一切如來大乘現證三昧法性不了知故，入餘天族壇中，為求一切意願圓滿，取著彼中愛樂快樂戲笑等事，乃於一切如來曼拏羅中受學法等，妄生怖畏而不能入，於彼惡趣壇路門中生住著心。",
        "from": "T18n0882_005:0353a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等類，若能於此金剛界大曼拏羅相應而入，為求一切適悅快樂勝愛樂事最上悉地者，亦得成就，即能轉彼入諸惡趣現前道等。",
        "from": "T18n0882_005:0353a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T18n0882_005:0353a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有有情修正法者，愛樂一切如來戒定慧法最上方便悉地果等，為求無上佛菩提故，修習一切禪定解脫地位等法，遍歷無量無邊苦者，如是等類，入此金剛界大曼拏羅中，如來之果即能速證，不為難得，況餘一切成就法等。",
        "from": "T18n0882_005:0353b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，宣說禮敬儀軌，謂先普禮四方一切如來，先作金剛合掌，全身委地禮東方如來。",
        "from": "T18n0882_005:0353b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明曰：",
        "from": "T18n0882_005:0353b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　薩哩嚩二合　怛他引　誐多一句　布儒仁祖切　波塞他二合引　那引　野引　怛摩二合引　喃儞哩夜二合引　怛夜引　彌薩哩嚩二合　怛他引　誐多二　嚩日囉二合　薩埵引　提瑟姹二合　莎𤚥引切身下同三「如前金剛合掌安於心間，即以顙禮南方如來。",
        "from": "T18n0882_005:0353b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明曰：",
        "from": "T18n0882_005:0353b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　薩哩嚩二合　怛他引　誐多一句　布惹引　毘尸引　哥引　夜引　怛摩二合引　喃儞哩夜二合引　怛夜引　彌薩哩嚩二合　怛他引　誐多二　嚩日囉二合　囉怛那二合　阿毘詵左𤚥引三「如前金剛合掌復安於頭，即以口禮西方如來。",
        "from": "T18n0882_005:0353b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明曰：",
        "from": "T18n0882_005:0353b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　薩哩嚩二合　怛他引　誐多一句　布惹引　鉢囉二合　嚩哩多二合　那引　夜引　怛摩二合引　喃儞哩夜二合引　怛夜引　彌薩哩嚩二合　怛他引　誐多二　嚩日囉二合　達哩摩二合引　鉢囉二合　嚩哩多二合　野𤚥引三「如前金剛合掌，從頭漸下安於心間，即以頂禮北方如來。",
        "from": "T18n0882_005:0353b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明曰：",
        "from": "T18n0882_005:0353b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　薩哩嚩二合　怛他引　誐多一句　布惹引　葛哩摩二合尼引　怛摩二合引　喃儞哩夜二合引　怛夜引　彌薩哩嚩二合　怛他引　誐多二　嚩日囉二合　葛哩摩二合　酤嚕引　𤚥引三「然後金剛阿闍梨令金剛弟子以緋帛覆面，結薩埵金剛印。",
        "from": "T18n0882_005:0353b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此大明曰：",
        "from": "T18n0882_005:0353b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「三摩野薩怛鑁三合一句「然後以二中指持於華鬘成印，即入曼拏羅。",
        "from": "T18n0882_005:0353c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此大明曰：",
        "from": "T18n0882_005:0353c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「三摩野吽引一句「入曼拏羅已，然後授此誓誡言：",
        "from": "T18n0882_005:0353c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝今已得入一切如來曼拏羅中，當觀我即從彼金剛智所生。",
        "from": "T18n0882_005:0353c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是金剛智故，汝即當得一切如來一切悉地，況餘所有悉地法邪！",
        "from": "T18n0882_005:0353c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有不見大曼拏羅者，汝不應為說此三昧法。",
        "from": "T18n0882_005:0353c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為說者違越三昧。",
        "from": "T18n0882_005:0353c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』然後金剛阿闍梨自結薩埵金剛印，安於金剛弟子頂。",
        "from": "T18n0882_005:0353c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安已作是言：",
        "from": "T18n0882_005:0353c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『諸不應說人，汝為說者，以此三昧金剛摧碎汝頂。",
        "from": "T18n0882_005:0353c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』次以三昧印水，誦是心明加持一遍，然後授與弟子令飲，說此誓心大明曰：",
        "from": "T18n0882_005:0353c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「嚩日囉二合　薩埵莎焬帝引　𭔞切身下同一句　紇哩二合　捺曳引　三摩嚩悉體二合　多二　儞哩毘二合　𭔞怛怛剎二合　𧹞夜引　夜引三　𭔞禰突嚕二合引　夜引　禰𤚥那野四嚩日嚕二合引　捺迦姹五「然以誓誡告弟子言：",
        "from": "T18n0882_005:0353c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝從今已後，想我即同金剛手尊，如我所作汝亦應作，汝當於我勿生輕慢，無令於汝返招殃咎，命終之後墮大地獄。",
        "from": "T18n0882_005:0353c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』復授誓誡心曰：",
        "from": "T18n0882_005:0353c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「薩哩囉二合　怛他引　誐多引　室左二合引　提底瑟姹二合當引一句　嚩日囉二合　薩都引　彌引　阿引　尾舍覩二「然後金剛阿闍梨即結薩埵金剛印，說是大明曰：",
        "from": "T18n0882_005:0353c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「阿焬多怛三二合　摩踰引　嚩日囕二合一句　嚩日囉二合薩埵彌帝三蜜哩三合　多二　阿引　尾舍野覩帝捺曳二合引　嚩三　嚩日囉二合　夜引　那末耨多囕四　嚩日囉二合引　尾引　舍惡五「然後開前薩埵金剛印，復結忿怒拳，如大乘現證三昧等法，以金剛語隨其所樂應當持誦，然作召入法。",
        "from": "T18n0882_005:0354a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當召入時，從微妙智生，以是智故，即能如應覺了他心，知過去未來等事，得心堅固，能於一切如來教中，息除諸苦，及得遠離一切怖畏，得一切薩埵一切如來威力加持，得一切悉地現前成辦，得未曾有歡喜適悅妙樂出生。",
        "from": "T18n0882_005:0354a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼妙樂中，或得成就諸三摩地，或得成就諸陀羅尼，或得圓滿一切意願，或復得成一切如來，然後即用彼印，安於自心以解弟子。",
        "from": "T18n0882_005:0354a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦是大明曰：",
        "from": "T18n0882_005:0354a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　底瑟姹二合　嚩日囉二合一句　捺哩二合　厨引　彌引　婆嚩二　賒引　說都引　彌引　婆嚩三　紇哩二合　捺野彌引提底瑟姹二合四　薩哩嚩二合　悉亭左彌引　鉢囉二合　野蹉五　吽引六　訶訶訶訶呼引七「次令弟子以所持華鬘𢱍於曼拏羅中。",
        "from": "T18n0882_005:0354a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦是大明曰：",
        "from": "T18n0882_005:0354a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「鉢囉二合　底引　蹉嚩日囉二合　呼引一句「然後華所墮處，即是本尊成就。",
        "from": "T18n0882_005:0354a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「次復，以其華鬘，繫弟子頭上，誦是大明曰：",
        "from": "T18n0882_005:0354a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　鉢囉二合　帝屹哩二合　恨拏二合　埵一句　彌𤚥薩埵摩賀引　末羅二　怛夜引　末馱夜引　底引　那摩賀引　薩怛吠二合引　那三　鉢囉二合　底󰴿覩引　婆嚩帝四尸引　竭囕二合　左引　寫悉𠆙切身下同底五「然後阿闍梨為其弟子除去面帛，誦是大明曰：",
        "from": "T18n0882_005:0354a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　嚩日囉二合　薩埵莎焬底𭔞一句　作芻訥伽二合引　吒那怛怛鉢二合　囉二　烏訥伽二合引　吒野底薩哩嚩二合引　芻引三　嚩日囉二合　作芻囉耨多囕四　呬嚩日囉二合　播舍五「然令弟子於大曼拏羅中次第觀視。",
        "from": "T18n0882_005:0354b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子於曼拏羅中纔觀視時，即得一切如來威力加持，金剛薩埵安住自心，即見曼拏羅中有其種種光明輪等諸神通事，入一切如來妙加持性，或見具德大持金剛者為現本身、或見如來等。",
        "from": "T18n0882_005:0354b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是已後，所有一切義利、一切意願，隨欲所作皆得成就，乃至得成持金剛尊，及成一切如來。",
        "from": "T18n0882_005:0354b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是大曼拏羅遍觀視已，然後金剛阿闍梨以金剛加持寶瓶香水灌弟子頂，誦是大明曰：",
        "from": "T18n0882_005:0354b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「嚩日囉二合引　毘詵左一句「然後阿闍梨隨以一印而為繫鬘，作自標幟安雙手中，如是告言：",
        "from": "T18n0882_005:0354b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝今已受諸佛如來金剛灌頂，得一切佛攝受於汝，汝當善得金剛成就。",
        "from": "T18n0882_005:0354b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』說是大明曰：",
        "from": "T18n0882_005:0354b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　嚩日囉二合引　提鉢底埵引一句　阿毘詵左引彌底瑟姹二合二　嚩日囉二合　三摩野薩怛鑁三合三「次當授與弟子金剛灌名。",
        "from": "T18n0882_005:0354b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是大明曰：",
        "from": "T18n0882_005:0354b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　嚩日囉二合　薩埵埵引一句　摩毘詵左引　彌嚩日囉二合　那引　摩引　毘尸引　哥多二　呬引　嚩日囉二合　那引　摩三「若為弟子授金剛名，應加係字隨用而呼。",
        "from": "T18n0882_005:0354b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上說入一切曼拏羅廣大儀軌。",
        "from": "T18n0882_005:0354b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，問弟子言：",
        "from": "T18n0882_005:0354b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝愛樂義利出生悉地智邪？",
        "from": "T18n0882_005:0354b28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通成辦悉地智邪？",
        "from": "T18n0882_005:0354c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持明成辦悉地智邪？",
        "from": "T18n0882_005:0354c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切如來最上成辦悉地智邪？",
        "from": "T18n0882_005:0354c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』然後隨其所樂如應為說，應先教示義利成辦悉地印智。",
        "from": "T18n0882_005:0354c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T18n0882_005:0354c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「金剛影像先安立，　　如應觀想在心中，",
        "from": "T18n0882_005:0354c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨方觀想彼地形，　　是處即當見伏藏。",
        "from": "T18n0882_005:0354c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛影像遍圖畫，　　如應觀想在空中，",
        "from": "T18n0882_005:0354c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所墮處乃應觀，　　是處即當見伏藏。",
        "from": "T18n0882_005:0354c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛影像住於舌，　　智者隨應如理觀，",
        "from": "T18n0882_005:0354c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自言是處有伏藏，　　如言隨現即真實。",
        "from": "T18n0882_005:0354c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛影像遍所成，　　如應觀想於己身，",
        "from": "T18n0882_005:0354c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀其遍入隨墮處，　　是處即當見伏藏。",
        "from": "T18n0882_005:0354c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼等心大明曰：",
        "from": "T18n0882_005:0354c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「嚩日囉二合　儞提一句「囉怛那二合　儞提一句「達哩摩二合　儞提一句「迦哩摩二合　儞提一句「次當教示金剛神通成辦悉地印智。",
        "from": "T18n0882_005:0354c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T18n0882_005:0354c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「金剛遍入所生已，　　金剛水成金剛形，",
        "from": "T18n0882_005:0354c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如應觀想速成就，　　即能於其水上行。",
        "from": "T18n0882_005:0354c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛遍入所生已，　　隨其所宜自色形，",
        "from": "T18n0882_005:0354c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如應觀想彼相應，　　即得自身同佛色。",
        "from": "T18n0882_005:0354c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前遍入己身已，　　自身即同於虛空，",
        "from": "T18n0882_005:0354c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如應觀想隨所欲，　　即得隱身而自在。",
        "from": "T18n0882_005:0354c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛遍入自生性，　　觀想自身如金剛，",
        "from": "T18n0882_005:0354c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後騰踊而高升，　　即能隨意虛空行。",
        "from": "T18n0882_005:0354c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼等心大明曰：",
        "from": "T18n0882_005:0354c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「嚩日囉二合　惹羅一句「嚩日囉二合　嚕引波一句「嚩日囉二合引　哥引舍一句「嚩日囉二合　摩㰠呼郎切一句「次當教示金剛持明成辦悉地印智。",
        "from": "T18n0882_005:0355a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T18n0882_005:0355a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「妙月影像遍圖畫，　　上踊空中隨意行，",
        "from": "T18n0882_005:0355a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想雙手持金剛，　　金剛持明得成就。",
        "from": "T18n0882_005:0355a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙月影像淨周遍，　　金剛大寶如應觀，",
        "from": "T18n0882_005:0355a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其所欲清淨身，　　於剎那中即騰踊。",
        "from": "T18n0882_005:0355a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "升於淨月輪相中，　　手持金剛妙蓮華，",
        "from": "T18n0882_005:0355a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想金剛眼清淨，　　即得持明法成就。",
        "from": "T18n0882_005:0355a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次於淨妙月輪中，　　羯磨金剛當觀想，",
        "from": "T18n0882_005:0355a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速持金剛妙巧業，　　一切持明得成就。",
        "from": "T18n0882_005:0355a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼等心大明曰：",
        "from": "T18n0882_005:0355a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「嚩日囉二合　達囉一句「囉怛那二合　達囉一句「達哩摩二合　達囉一句「迦哩摩二合　達囉一句「次當教示一切如來最上成辦悉地印智。",
        "from": "T18n0882_005:0355a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T18n0882_005:0355a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「巧業金剛三摩地，　　思惟遍滿虛空界，",
        "from": "T18n0882_005:0355a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其所欲金剛身，　　於剎那中即騰踊。",
        "from": "T18n0882_005:0355a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩埵清淨三摩地，　　觀想最上亦復然，",
        "from": "T18n0882_005:0355a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得自在五神通，　　速疾大智得成就。",
        "from": "T18n0882_005:0355a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵眾所成，　　猶如虛空極廣大，",
        "from": "T18n0882_005:0355a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅固隨念速疾成，　　自身即得持金剛。",
        "from": "T18n0882_005:0355a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛影像眾所成，　　離障寥廓等空界，",
        "from": "T18n0882_005:0355a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切佛等持門，　　是中證得諸佛果。",
        "from": "T18n0882_005:0355a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼等心大明曰：",
        "from": "T18n0882_005:0355a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「嚩日囉二合　嚩日囉二合一句「戍馱戍馱一句「薩埵薩埵「沒馱沒馱一句「如是一切悉地智成辦已。",
        "from": "T18n0882_005:0355b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，宣說祕密總持堪忍法門。",
        "from": "T18n0882_005:0355b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先為宣說誓心明曰：",
        "from": "T18n0882_005:0355b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　嚩日囉二合　薩埵莎焬帝𭔞一句　紇哩二合　捺曳引　三摩嚩悉體二合引　多二　儞哩毘二合引　𭔞怛怛剎二合　𧹞夜引夜引三　𭔞禰沒嚕二合引　夜禰摩那焬四「次說誓誡言：",
        "from": "T18n0882_005:0355b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝今不應違越於此誓心三昧，無令於汝返招殃咎，勿使此身命終之後墮大地獄。",
        "from": "T18n0882_005:0355b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』然後教示祕密印智。",
        "from": "T18n0882_005:0355b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T18n0882_005:0355b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「金剛遍入發生已，　　以金剛掌微細指，",
        "from": "T18n0882_005:0355b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切等攝而齊拍，　　山石尚能作敬愛。",
        "from": "T18n0882_005:0355b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛遍入法相應，　　金剛妙縛能摧壞。",
        "from": "T18n0882_005:0355b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼微細指和合時，　　山石亦能遍警振。",
        "from": "T18n0882_005:0355b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以如前遍入法，　　彼金剛縛悉展舒，",
        "from": "T18n0882_005:0355b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復諸指使遍開，　　剎那能壞於百族。",
        "from": "T18n0882_005:0355b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微細遍入法相應，　　所有諸指皆等攝，",
        "from": "T18n0882_005:0355b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛縛而作解，　　能奪一切極惡苦。",
        "from": "T18n0882_005:0355b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，宣說祕密成就。",
        "from": "T18n0882_005:0355b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若男子、若女人謂應遍入於婆儗中，彼遍入已，想彼諸身普遍展舒。",
        "from": "T18n0882_005:0355b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼心大明曰：",
        "from": "T18n0882_005:0355b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「嚩日囉二合　嚩舍一句「嚩日囉二合引　吠舍一句「嚩日囉二合　訶那一句「嚩日囉二合　訶囉一句「授彼心已，然後教示本尊四種印智，復說此誓誡言：",
        "from": "T18n0882_005:0355c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『諸餘未知此一印者，汝當慎勿為其指示。",
        "from": "T18n0882_005:0355c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T18n0882_005:0355c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是彼有情，以不見大曼拏羅故輒結是印者不得成就，彼即生疑返招殃咎，速趣命終墮於無間大地獄中，復墮惡趣。",
        "from": "T18n0882_005:0355c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』復次，宣說一切如來薩埵成就大印智，是即一切如來現證菩提印。",
        "from": "T18n0882_005:0355c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T18n0882_005:0355c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「先從心智發生已，　　次應觀想金剛月，",
        "from": "T18n0882_005:0355c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身即是諸佛形，　　復當觀想金剛界。",
        "from": "T18n0882_005:0355c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此纔獲成就間，　　即得智壽及力年，",
        "from": "T18n0882_005:0355c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切隨意悉能行，　　乃至佛果不難得。",
        "from": "T18n0882_005:0355c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「次說結金剛薩埵成就大印。",
        "from": "T18n0882_005:0355c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T18n0882_005:0355c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「以高舉相戲擲杵，　　作金剛慢自在勢，",
        "from": "T18n0882_005:0355c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住身語心金剛，　　金剛薩埵即已是，",
        "from": "T18n0882_005:0355c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此一切能遍行，　　一切欲主獲妙樂，",
        "from": "T18n0882_005:0355c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽力勝色及神通，　　金剛薩埵等無異。",
        "from": "T18n0882_005:0355c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼身語心金剛，　　如其圖畫順修習，",
        "from": "T18n0882_005:0355c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足所有標幟印，　　即作大薩埵成就。",
        "from": "T18n0882_005:0355c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次宣說於諸教，　　能成及彼所成法，",
        "from": "T18n0882_005:0355c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸成就者大事業，　　今當次第而宣說，",
        "from": "T18n0882_005:0355c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日先當依時分，　　如應作自加持等，",
        "from": "T18n0882_005:0355c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸成就法善作已，　　然後隨欲而自在。",
        "from": "T18n0882_005:0355c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復說大印成就廣大儀軌。",
        "from": "T18n0882_005:0355c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T18n0882_005:0355c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「金剛遍入發生已，　　大印所作如儀軌，",
        "from": "T18n0882_005:0355c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其印如前法所結，　　隨應觀想大薩埵。",
        "from": "T18n0882_005:0355c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼智薩埵得見已，　　即應觀想於自身，",
        "from": "T18n0882_005:0355c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印鉤召遍入已，　　作敬愛已得成就。",
        "from": "T18n0882_005:0355c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼心大明曰：",
        "from": "T18n0882_005:0355c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「嚩日囉二合　薩埵惡「此是金剛遍入心。",
        "from": "T18n0882_005:0356a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「嚩日囉二合　薩埵捺哩二合　舍一句「此是大士隨念心。",
        "from": "T18n0882_005:0356a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「惹吽引　鑁呼引「此是大薩埵鉤召遍入妙縛敬愛心。",
        "from": "T18n0882_005:0356a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次，頌曰：",
        "from": "T18n0882_005:0356a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此三摩邪薩怛鑁，　　遍入於彼後月輪，",
        "from": "T18n0882_005:0356a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自身即薩埵故，　　誦三摩邪薩怛鑁，",
        "from": "T18n0882_005:0356a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由彼薩埵大印故，　　觀想己身即彼身，",
        "from": "T18n0882_005:0356a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛語妙成就，　　即一切印皆能成。",
        "from": "T18n0882_005:0356a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦惹吽鑁呼明，　　即能遍入一切佛，",
        "from": "T18n0882_005:0356a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起如善意妙相應，　　即得廣大勝成就。",
        "from": "T18n0882_005:0356a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次我說羯磨法，　　金剛羯磨勝無上，",
        "from": "T18n0882_005:0356a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛隨念妙悉地，　　速疾得成正覺尊。",
        "from": "T18n0882_005:0356a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩埵金剛妙成就，　　獲得一切印主宰；",
        "from": "T18n0882_005:0356a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大寶金剛成就故，　　即為一切寶主宰；",
        "from": "T18n0882_005:0356a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙法金剛由成就，　　即能任持諸佛法；",
        "from": "T18n0882_005:0356a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯磨金剛印相應，　　能辦金剛眾事業；",
        "from": "T18n0882_005:0356a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵法成就，　　由結薩埵大智印；",
        "from": "T18n0882_005:0356a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鉤召法相應，　　持金剛者悉能召；",
        "from": "T18n0882_005:0356a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛妙愛大印智，　　即能善愛一切佛；",
        "from": "T18n0882_005:0356a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛善哉法相應，　　即得諸佛皆歡喜；",
        "from": "T18n0882_005:0356a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛寶印如儀軌，　　即得諸佛授灌頂；",
        "from": "T18n0882_005:0356a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛妙光法相應，　　金剛光明悉獲得；",
        "from": "T18n0882_005:0356a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持習金剛幢相應，　　即得一切願圓滿；",
        "from": "T18n0882_005:0356a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛大笑法相應，　　得與諸佛同喜笑；",
        "from": "T18n0882_005:0356a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛妙法理相應，　　即能任持金剛法；",
        "from": "T18n0882_005:0356a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由金剛利法相應，　　即得諸佛勝妙慧；",
        "from": "T18n0882_005:0356a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持習金剛輪因故，　　即能轉彼大法輪；",
        "from": "T18n0882_005:0356a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛妙語若相應，　　即得諸佛語成就；",
        "from": "T18n0882_005:0356b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛勝業成就故，　　速得金剛勝事業；",
        "from": "T18n0882_005:0356b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛甲冑若被身，　　得金剛身妙堅固；",
        "from": "T18n0882_005:0356b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藥叉由成就，　　金剛藥叉等無異；",
        "from": "T18n0882_005:0356b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛拳妙縛成，　　得一切印皆成就；",
        "from": "T18n0882_005:0356b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛嬉戲成就故，　　即得金剛妙樂事；",
        "from": "T18n0882_005:0356b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛寶鬘法相應，　　得一切佛施灌頂；",
        "from": "T18n0882_005:0356b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛妙歌相應故，　　即得金剛妙歌詠；",
        "from": "T18n0882_005:0356b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛旋舞法相應，　　普能供養一切佛；",
        "from": "T18n0882_005:0356b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛燒香法相應，　　普施世間大適悅；",
        "from": "T18n0882_005:0356b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛妙華法相應，　　能作世間敬愛事；",
        "from": "T18n0882_005:0356b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛燈明大印契，　　以供養故得淨眼；",
        "from": "T18n0882_005:0356b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛塗香妙相應，　　能除一切諸苦惱；",
        "from": "T18n0882_005:0356b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鉤召法相應，　　能作鉤召諸勝業；",
        "from": "T18n0882_005:0356b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛索相應故，　　普令一切遍引入；",
        "from": "T18n0882_005:0356b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鎖法相應故，　　即能堪任一切縛；",
        "from": "T18n0882_005:0356b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由金剛鈴遍警覺，　　一切遍入令歡喜。",
        "from": "T18n0882_005:0356b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說一切如來真實攝大乘現證三昧大教王經卷第五",
        "from": "T18n0882_005:0356b19_100",
        "context_with_next_sentence": false
    }
]