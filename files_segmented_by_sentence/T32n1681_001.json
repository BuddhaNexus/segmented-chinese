[
    {
        "source_sentence": "佛吉祥德讚卷上",
        "from": "T32n1681_001:0762a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者寂友造",
        "from": "T32n1681_001:0762a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫",
        "from": "T32n1681_001:0762a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今歸命佛世尊，　　稱讚最上諸功德，",
        "from": "T32n1681_001:0762a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時語如語不誑語，　　實語法語如義語，",
        "from": "T32n1681_001:0762a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正語寂語無我語，　　顯示第一義諦門。",
        "from": "T32n1681_001:0762a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出現諸身普遍眼，　　善施光明常觀照，",
        "from": "T32n1681_001:0762a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開諸有情智慧目，　　破彼所有癡暗冥，",
        "from": "T32n1681_001:0762a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十力真實而出生，　　已到最上清涼地。",
        "from": "T32n1681_001:0762a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四無所畏等具足，　　作大光明持燈炬，",
        "from": "T32n1681_001:0762a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開發明焰布光照，　　施彼熾盛大明聚，",
        "from": "T32n1681_001:0762a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發起堅固精進行，　　不減一切勝功德。",
        "from": "T32n1681_001:0762b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦師子大吼音，　　能說無縛正法者，",
        "from": "T32n1681_001:0762b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間八法不能染，　　最上清淨大悲者，",
        "from": "T32n1681_001:0762b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵王帝釋毘沙門，　　及餘天等咸恭敬。",
        "from": "T32n1681_001:0762b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我佛常出妙巧語，　　甘美甚深復廣大，",
        "from": "T32n1681_001:0762b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正真如理解脫音，　　復能了知一切語，",
        "from": "T32n1681_001:0762b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大清淨如虛空，　　最上族氏王宮生。",
        "from": "T32n1681_001:0762b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛光明如日月光，　　天人阿脩羅供養，",
        "from": "T32n1681_001:0762b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "己得七覺支妙寶，　　建立最上法寶幢，",
        "from": "T32n1681_001:0762b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡暗翳悉開明，　　黃金光聚身照耀。",
        "from": "T32n1681_001:0762b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中最上人中尊，　　已斷貪恚癡等染，",
        "from": "T32n1681_001:0762b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中奔拏利迦華，　　人中諸妙蓮華等。",
        "from": "T32n1681_001:0762b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨生死憂悲惱，　　無明憍慢悉已除，",
        "from": "T32n1681_001:0762b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永塞鬪戰諍訟門，　　永斷相續諸染種。",
        "from": "T32n1681_001:0762b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付授諸法不祕惜，　　摧我慢幢竪法幢，",
        "from": "T32n1681_001:0762b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉正法輪利眾生，　　壞生死輪息諸苦。",
        "from": "T32n1681_001:0762b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奢摩他水湛然淨，　　如海流注深無底，",
        "from": "T32n1681_001:0762b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已能枯竭愛源流，　　是故充滿功德水，",
        "from": "T32n1681_001:0762b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者咸生忻悅心，　　於一切處無所著，",
        "from": "T32n1681_001:0762b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能捨己身為眾生，　　冤親二處悉平等。",
        "from": "T32n1681_001:0762b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色如真金初出焰，　　舌比蓮華廣清淨，",
        "from": "T32n1681_001:0762b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身光照耀淨復明，　　熾盛如金亦如電。",
        "from": "T32n1681_001:0762b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進勤策以為腰，　　安住三摩地為頸，",
        "from": "T32n1681_001:0762b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧通達為頂門，　　次第而表莊嚴相。",
        "from": "T32n1681_001:0762b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來勇猛無畏尊，　　一切廣遠悉通達，",
        "from": "T32n1681_001:0762b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能摧魔力大象龍，　　善說最上諸法語。",
        "from": "T32n1681_001:0762b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住勝妙忍辱樂，　　已斷一切愛纏縛，",
        "from": "T32n1681_001:0762b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正智安立智堅牢，　　智慧深廣無破智。",
        "from": "T32n1681_001:0762b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上難得優曇華，　　具百千種勝功德，",
        "from": "T32n1681_001:0762b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來聖尊值復難，　　具足無邊功德法，",
        "from": "T32n1681_001:0762c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如地能持諸種子，　　安定寂靜復廣大。",
        "from": "T32n1681_001:0762c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來智慧亦復然，　　具足無邊功德法，",
        "from": "T32n1681_001:0762c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無垢無染本清淨，　　沐浴身心調伏尊，",
        "from": "T32n1681_001:0762c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引導眾生彼岸行。",
        "from": "T32n1681_001:0762c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十二相悉具足，　　八十種好復莊嚴，",
        "from": "T32n1681_001:0762c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百福俱圓勝妙身，　　廣大最上無等比。",
        "from": "T32n1681_001:0762c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已於諸法得自在，　　顯示清淨勝義門，",
        "from": "T32n1681_001:0762c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智能遍諸境界中，　　智金剛破諸煩惱。",
        "from": "T32n1681_001:0762c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已能調伏世間境，　　發悟希望性已除，",
        "from": "T32n1681_001:0762c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對治煩惱盡無餘，　　廣大辯才無障礙。",
        "from": "T32n1681_001:0762c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施持戒及忍辱，　　精進禪定并智慧，",
        "from": "T32n1681_001:0762c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸波羅蜜悉已圓，　　阿私陀仙常供養。",
        "from": "T32n1681_001:0762c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛是高勝功德山，　　功德藏并功德海，",
        "from": "T32n1681_001:0762c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自覺覺他覺行圓，　　聲聞十方而普震，",
        "from": "T32n1681_001:0762c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊言說無邊德，　　辯才無盡亦無邊。",
        "from": "T32n1681_001:0762c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛一切智無上尊，　　歸命佛為大恩者，",
        "from": "T32n1681_001:0762c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命善作世間護，　　隨應諸法悉已聞。",
        "from": "T32n1681_001:0762c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自智通達諸法門，　　稽首最勝知法者，",
        "from": "T32n1681_001:0762c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以自智見諸法，　　證得無上大菩提，",
        "from": "T32n1681_001:0762c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後覺眾生利亦然，　　稽首自他真覺者。",
        "from": "T32n1681_001:0762c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實了知諸梵行，　　無破無斷色力堅，",
        "from": "T32n1681_001:0762c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足清白復周圓，　　稽首淨修梵行者。",
        "from": "T32n1681_001:0762c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無忘失法已安住，　　勇猛堅固最勝尊，",
        "from": "T32n1681_001:0762c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛心廣大量無邊，　　悉能照達苦樂性。",
        "from": "T32n1681_001:0762c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛為最勝善調御，　　復稱無上二足尊，",
        "from": "T32n1681_001:0762c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸沙門中大沙門，　　稽首沙門無過者。",
        "from": "T32n1681_001:0762c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛已具修諸淨行，　　能作世間大醫王，",
        "from": "T32n1681_001:0762c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為勝觀解脫尊，　　稽首導師大智慧。",
        "from": "T32n1681_001:0762c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏寂靜近寂靜，　　安住最上調伏心，",
        "from": "T32n1681_001:0763a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得入第一義諦門，　　稽首已到清涼地。",
        "from": "T32n1681_001:0763a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切合掌作恭敬，　　應受人天最初供，",
        "from": "T32n1681_001:0763a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堪為人天施福田，　　歸命福生無上士。",
        "from": "T32n1681_001:0763a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知法知義知時量，　　如實知自亦知他，",
        "from": "T32n1681_001:0763a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他根性悉了知，　　了知此彼數取趣。",
        "from": "T32n1681_001:0763a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩呬多諸根寂，　　諸行所作悉周圓，",
        "from": "T32n1681_001:0763a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒禁具足妙無瑕，　　稽首大力三摩地。",
        "from": "T32n1681_001:0763a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住無滅三摩地，　　無患無動離諸危，",
        "from": "T32n1681_001:0763a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已無高下取捨心，　　結生相續悉永離，",
        "from": "T32n1681_001:0763a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如妙高山心安固，　　不退轉智悉能成，",
        "from": "T32n1681_001:0763a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍一切處智常隨，　　稽首無勝無滅智。",
        "from": "T32n1681_001:0763a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知諸法無能勝，　　佛是愛見善見尊，",
        "from": "T32n1681_001:0763a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智愛善愛德無邊，　　稽首愛憎平等者。",
        "from": "T32n1681_001:0763a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上威儀眾喜愛，　　具足美妙諸辯才，",
        "from": "T32n1681_001:0763a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯才隨意破愚癡，　　稽首宣暢正語者。",
        "from": "T32n1681_001:0763a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名稱廣大復希有，　　遍三界中而普聞，",
        "from": "T32n1681_001:0763a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間智者隨問言，　　佛皆善答無隱覆。",
        "from": "T32n1681_001:0763a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛威儀相勝無比，　　見者咸生適悅心，",
        "from": "T32n1681_001:0763a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令世間喜愛生，　　稽首善施歡喜者。",
        "from": "T32n1681_001:0763a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迅疾言說無重復，　　平等無等無差別，",
        "from": "T32n1681_001:0763a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "美味具足妙言音，　　稽首語言無等等。",
        "from": "T32n1681_001:0763a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛是人中大智者，　　復為最上人中仙，",
        "from": "T32n1681_001:0763a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間異見悉不生，　　稽首遠離邪思覺。",
        "from": "T32n1681_001:0763a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已息憂悲諸苦惱，　　蠲除染法盡無餘，",
        "from": "T32n1681_001:0763a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輕浮動亂過不生，　　稽首永離諸過者。",
        "from": "T32n1681_001:0763a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀呰如來心不下，　　讚譽如來心不高，",
        "from": "T32n1681_001:0763a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱譏平等智安然，　　稽首不著於謗讚。",
        "from": "T32n1681_001:0763a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平坦高下及染淨，　　苦法樂法與愛憎，",
        "from": "T32n1681_001:0763a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛智無著亦無差，　　稽首如來善語者。",
        "from": "T32n1681_001:0763b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生惡語無義利，　　如來善覆無顯彰，",
        "from": "T32n1681_001:0763b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行諸施法攝世間，　　稽首正真能語者。",
        "from": "T32n1681_001:0763b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡人惡語固觸嬈，　　佛心無動而安然，",
        "from": "T32n1681_001:0763b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善言惡語等無差，　　稽首愛恚平等者。",
        "from": "T32n1681_001:0763b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃金瑠璃真珠寶，　　斯為世間最上珍，",
        "from": "T32n1681_001:0763b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來已離貪愛心，　　觀同草木土石等。",
        "from": "T32n1681_001:0763b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來已離三種慢，　　其心安定而寂然，",
        "from": "T32n1681_001:0763b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "床敷臥具及諸珍，　　見來求者皆給施。",
        "from": "T32n1681_001:0763b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於利非利無喜恚，　　輕慢亦生喜捨心，",
        "from": "T32n1681_001:0763b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無憂無惱過不生，　　稽首智破邪法者。",
        "from": "T32n1681_001:0763b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已能遠離諸嬈惱，　　常說親近諸善人，",
        "from": "T32n1681_001:0763b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不說世間利養言，　　亦無虛妄等言說，",
        "from": "T32n1681_001:0763b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言說隨意復自在，　　言說調寂離喜樂，",
        "from": "T32n1681_001:0763b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言說純一淨無瑕，　　稽首言說寂靜者。",
        "from": "T32n1681_001:0763b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言說甘美而無著，　　言說能伏一切魔，",
        "from": "T32n1681_001:0763b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言說決定離世間，　　稽首已離諸無智。",
        "from": "T32n1681_001:0763b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已能遠離顛倒見，　　已離輕浮動亂緣，",
        "from": "T32n1681_001:0763b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已離一切非語言，　　稽首善言攝化者。",
        "from": "T32n1681_001:0763b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常行無諂無誑行，　　順行清淨真實心，",
        "from": "T32n1681_001:0763b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣行愛敬實無虛，　　稽首已度生死難。",
        "from": "T32n1681_001:0763b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所作善成就，　　是為正法出生門，",
        "from": "T32n1681_001:0763b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者歡喜世間尊，　　稽首歸命清淨士。",
        "from": "T32n1681_001:0763b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命親說諸法教，　　隨宜無轉煩惱除，",
        "from": "T32n1681_001:0763b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正善了知出離門，　　趣證菩提真實法。",
        "from": "T32n1681_001:0763b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無破高勝歸向法，　　善啟世間寂淨門，",
        "from": "T32n1681_001:0763b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至正妙廣宣揚，　　天人世間利樂法。",
        "from": "T32n1681_001:0763b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來所說諸法語，　　離諸愛欲染著聲，",
        "from": "T32n1681_001:0763b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不調伏聲悉已除，　　稽首善說法教者。",
        "from": "T32n1681_001:0763b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來久修諸淨命，　　心無動亂本安然，",
        "from": "T32n1681_001:0763c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三處平等念住心，　　稽首能仁三不護。",
        "from": "T32n1681_001:0763c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛已斷除疑惑語，　　平等分位常所行，",
        "from": "T32n1681_001:0763c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃無異勝愛門，　　稽首廣大證入者。",
        "from": "T32n1681_001:0763c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛為最上勝道者，　　具足眾德天人尊，",
        "from": "T32n1681_001:0763c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通方便悉圓成，　　稽首已得諸自在。",
        "from": "T32n1681_001:0763c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首歸依眾德圓，　　十號滿足無比等，",
        "from": "T32n1681_001:0763c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來應供正等覺，　　明行具足善逝尊，",
        "from": "T32n1681_001:0763c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間解了無上士，　　調語丈夫天人師，",
        "from": "T32n1681_001:0763c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛世尊號普稱揚，　　是故我今伸讚禮。",
        "from": "T32n1681_001:0763c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來無染無發悟，　　離胎藏生殊勝生，",
        "from": "T32n1681_001:0763c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿眾生諸願求，　　稽首善攝一切法。",
        "from": "T32n1681_001:0763c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示生清淨聖王種，　　廣大富貴復尊高，",
        "from": "T32n1681_001:0763c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能棄捨而出家，　　稽首下心離高舉。",
        "from": "T32n1681_001:0763c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足最上諸色力，　　端嚴相好見者忻，",
        "from": "T32n1681_001:0763c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世諸妙境悉棄捐，　　稽首清淨解脫者。",
        "from": "T32n1681_001:0763c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒律清淨具無缺，　　如應能說即能行，",
        "from": "T32n1681_001:0763c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大智大慧大聖尊，　　稽首同事攝益者。",
        "from": "T32n1681_001:0763c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語正白復妙善，　　斷除貪欲過不生，",
        "from": "T32n1681_001:0763c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切染法悉蠲除，　　宣說正因正業語。",
        "from": "T32n1681_001:0763c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說諸行語離纏縛，　　常以柔軟愛言宣，",
        "from": "T32n1681_001:0763c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門婆羅門眾中，　　如來語言常先勝。",
        "from": "T32n1681_001:0763c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面相圓正離顰蹙，　　正順先導而安然，",
        "from": "T32n1681_001:0763c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善來愛語攝眾生，　　稽首正說攝諸過。",
        "from": "T32n1681_001:0763c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所出語言皆具足，　　無畏語業善稱揚，",
        "from": "T32n1681_001:0763c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深語正語智語言，　　稽首如來息惡語。",
        "from": "T32n1681_001:0763c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語無著無依止，　　亦無違背諸語言，",
        "from": "T32n1681_001:0763c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有言說悉無邊，　　稽首能敷了義語。",
        "from": "T32n1681_001:0763c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巧美語言善辯才，　　利樂悲愍諸眾生，",
        "from": "T32n1681_001:0763c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣啟眾生調伏門，　　稽首聖法性調伏。",
        "from": "T32n1681_001:0764a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛是正法調伏士，　　離塵諸法調伏尊，",
        "from": "T32n1681_001:0764a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無等法門調伏師，　　以無量法調伏者。",
        "from": "T32n1681_001:0764a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來戒具足同等，　　定慧具足亦無差，",
        "from": "T32n1681_001:0764a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫具足本同源，　　解脫知見具無異。",
        "from": "T32n1681_001:0764a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖正吉祥大覺者，　　最上調伏同一門，",
        "from": "T32n1681_001:0764a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於林野息眾緣，　　隨意坐臥而安止。",
        "from": "T32n1681_001:0764a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不害相而說法，　　無綺語相而說法，",
        "from": "T32n1681_001:0764a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無動轉相而說法，　　示出離相而說法，",
        "from": "T32n1681_001:0764a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已斷輪迴相說法，　　可愛涅槃相說法，",
        "from": "T32n1681_001:0764a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無他苦相而說法，　　善自性相而說法，",
        "from": "T32n1681_001:0764a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間利益相說法，　　離邪見相而說法，",
        "from": "T32n1681_001:0764a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同異生相而說法，　　不轉相續相說法，",
        "from": "T32n1681_001:0764a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首無住相說法。",
        "from": "T32n1681_001:0764a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若法若智實亦然，　　說明了義破疑惑，",
        "from": "T32n1681_001:0764a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法正白善分別，　　平等高下普言宣，",
        "from": "T32n1681_001:0764a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正道邪道悉顯彰，　　利非利事皆善了，",
        "from": "T32n1681_001:0764a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善不善悉分別，　　通達正教邪教門，",
        "from": "T32n1681_001:0764a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德已圓過已除，　　稽首自他能度者。",
        "from": "T32n1681_001:0764a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以善法破惡趣，　　樂中非樂方便說，",
        "from": "T32n1681_001:0764a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間生滅真實知，　　善說最勝諸法寶。",
        "from": "T32n1681_001:0764a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來真實最上教，　　三界所作能成就，",
        "from": "T32n1681_001:0764a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善趣惡趣悉了知，　　善惡事中智無倒。",
        "from": "T32n1681_001:0764a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知縛脫本來性，　　而能善說縛脫門，",
        "from": "T32n1681_001:0764a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪正染淨悉能知，　　善不善義皆明了。",
        "from": "T32n1681_001:0764a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已能具足最上善，　　具善行者普稱揚，",
        "from": "T32n1681_001:0764a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救拔一切惡趣中，　　如來悲為一味藥。",
        "from": "T32n1681_001:0764a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首天仙最上士，　　不著甚深禪定樂，",
        "from": "T32n1681_001:0764a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生適悅喜愛心，　　誓度愚迷貪欲海。",
        "from": "T32n1681_001:0764a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身廣大諸色相，　　畢竟圓滿可稱揚，",
        "from": "T32n1681_001:0764b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界最勝應供尊，　　我今歸命不可議。",
        "from": "T32n1681_001:0764b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛吉祥德讚卷上",
        "from": "T32n1681_001:0764b03_100",
        "context_with_next_sentence": false
    }
]