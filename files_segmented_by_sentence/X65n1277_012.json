{
    "X65n1277_012:0043b01_0": "高峰龍泉院因師集賢語錄卷之十二",
    "X65n1277_012:0043b03_0": "追薦陳意門(讚靈通用)",
    "X65n1277_012:0043b04_0": "總薦亡",
    "X65n1277_012:0043b05_0": "百年光景全在剎那。",
    "X65n1277_012:0043b05_1": "四大幻身豈能長久。",
    "X65n1277_012:0043b05_2": "自离塵世香魂杳杳未知方。",
    "X65n1277_012:0043b06_3": "既返泉關逝魄茫茫何所往。",
    "X65n1277_012:0043b06_4": "音容莫睹。",
    "X65n1277_012:0043b07_5": "骨肉徒傷。",
    "X65n1277_012:0043b07_6": "欲伸薦披之功。",
    "X65n1277_012:0043b07_7": "須假慈悲之力。",
    "X65n1277_012:0043b08_0": "又",
    "X65n1277_012:0043b09_0": "夫子聖人猶見兩楹夢奠。",
    "X65n1277_012:0043b09_1": "達磨大士尚聞隻履西歸。",
    "X65n1277_012:0043b10_0": "法身未免有去來。",
    "X65n1277_012:0043b10_1": "幻質豈能無生死。",
    "X65n1277_012:0043b10_2": "冥途既往。",
    "X65n1277_012:0043b10_3": "逝魄何歸。",
    "X65n1277_012:0043b11_4": "須憑薦拔之功。",
    "X65n1277_012:0043b11_5": "直指超昇之路。",
    "X65n1277_012:0043b11_6": "(已下任敘所作佛事)又百年夢幻嗟塵世之循環。",
    "X65n1277_012:0043b13_7": "諸佛慈悲揭真乘而濟度。",
    "X65n1277_012:0043b14_0": "伏念亡(某人)奉身儉約致業勤勞。",
    "X65n1277_012:0043b14_1": "接物待人本謙和而罔間。",
    "X65n1277_012:0043b15_2": "事尊撫幻盡孝義以無虧。",
    "X65n1277_012:0043b15_3": "方期壽岳之崇。",
    "X65n1277_012:0043b15_4": "俄嘆驚波之逝。",
    "X65n1277_012:0043b16_5": "上遺華髮缺溫清於萱堂。",
    "X65n1277_012:0043b16_6": "下棄諸孤極攀號於苫室。",
    "X65n1277_012:0043b17_7": "欲嚴昭薦。",
    "X65n1277_012:0043b17_8": "庸假薰修。",
    "X65n1277_012:0043b17_9": "(同前)又地水火風真箇夢中說夢。",
    "X65n1277_012:0043b19_10": "生老病死誰知身外有身。",
    "X65n1277_012:0043b20_0": "欲求彼岸超生。",
    "X65n1277_012:0043b20_1": "須向箇中著力。",
    "X65n1277_012:0043b20_2": "恭惟(某人)之靈。",
    "X65n1277_012:0043b20_3": "天資長厚。",
    "X65n1277_012:0043b21_4": "地胄光華。",
    "X65n1277_012:0043b21_5": "其起家也則有貫朽粟腐之名。",
    "X65n1277_012:0043b21_6": "其處鄉也則有親仁善隣之美。",
    "X65n1277_012:0043b22_7": "福在其身則壽考康寧之是享。",
    "X65n1277_012:0043b23_8": "慶流于後則德行道義之俱全。",
    "X65n1277_012:0043b23_9": "膺鶚薦而五舉不虗。",
    "X65n1277_012:0043b24_10": "指龍門而一躍在即。",
    "X65n1277_012:0043b24_11": "方謂椿齡益固。",
    "X65n1277_012:0043b24_12": "豈期薤露遽晞。",
    "X65n1277_012:0043c01_13": "百千萬事總成空。",
    "X65n1277_012:0043c01_14": "八十二年渾是夢。",
    "X65n1277_012:0043c01_15": "三釜之養弗及。",
    "X65n1277_012:0043c02_16": "九泉之恨徒增。",
    "X65n1277_012:0043c02_17": "莫駐双輪。",
    "X65n1277_012:0043c02_18": "俯臨首七。",
    "X65n1277_012:0043c03_0": "薦祖父母",
    "X65n1277_012:0043c04_0": "先祖是皇素積門閭之德。",
    "X65n1277_012:0043c04_1": "孝孫有慶敢忘骨肉之恩。",
    "X65n1277_012:0043c05_0": "適際忌辰。",
    "X65n1277_012:0043c05_1": "仰皈皇覺。",
    "X65n1277_012:0043c05_2": "伏念(某人)理家勤儉教子詩書。",
    "X65n1277_012:0043c06_0": "兄弟無間言。",
    "X65n1277_012:0043c06_1": "朋友責善道。",
    "X65n1277_012:0043c06_2": "自得田園之樂。",
    "X65n1277_012:0043c06_3": "共推里閈之仁。",
    "X65n1277_012:0043c07_4": "生前既有興家剏業之功。",
    "X65n1277_012:0043c07_5": "歿後當懷謹終追遠之念。",
    "X65n1277_012:0043c08_6": "(追遠忌辰)薦父陟岵興嗟爰起勞思之志。",
    "X65n1277_012:0043c10_7": "蓼莪託詠難伸哀告之誠。",
    "X65n1277_012:0043c11_0": "雖殫孝子之心。",
    "X65n1277_012:0043c11_1": "莫報昊天之德。",
    "X65n1277_012:0043c11_2": "伏念父(某)生成德重教養恩深。",
    "X65n1277_012:0043c12_3": "本期盡養於百年。",
    "X65n1277_012:0043c12_4": "豈謂俄終於一疾。",
    "X65n1277_012:0043c13_0": "父五七",
    "X65n1277_012:0043c14_0": "劬勞有賴足知生我之恩。",
    "X65n1277_012:0043c14_1": "酬報未由遽起何怙之歎。",
    "X65n1277_012:0043c15_0": "唯佛子能伸子道。",
    "X65n1277_012:0043c15_1": "假聖慈少薦父慈。",
    "X65n1277_012:0043c15_2": "望埀赦罪之恩。",
    "X65n1277_012:0043c16_0": "直指往生之路。",
    "X65n1277_012:0043c16_1": "痛念(某人)向居塵世纔登六十二年。",
    "X65n1277_012:0043c17_0": "今返泉臺倐經三十五日。",
    "X65n1277_012:0043c18_0": "又",
    "X65n1277_012:0043c19_0": "青春向晚痛嚴君歸壽之辰。",
    "X65n1277_012:0043c19_1": "朱夏俄臨當孝子酬恩之日。",
    "X65n1277_012:0043c20_2": "欲薦靈魂度脫。",
    "X65n1277_012:0043c20_3": "須憑我佛慈悲。",
    "X65n1277_012:0043c20_4": "敬念(某人)居人世七十八年。",
    "X65n1277_012:0043c21_5": "拋幻塵三十五日。",
    "X65n1277_012:0043c21_6": "欲報生成之德。",
    "X65n1277_012:0043c21_7": "用憑薦悼之功。",
    "X65n1277_012:0043c23_0": "父小祥",
    "X65n1277_012:0043c24_0": "無父何怙每懷陟岵之悲。",
    "X65n1277_012:0043c24_1": "有佛可依甞發濟人之願。",
    "X65n1277_012:0044a01_0": "重念(某人)存心平等處己溫良。",
    "X65n1277_012:0044a01_1": "既為十善之人。",
    "X65n1277_012:0044a01_2": "宜享百年之壽。",
    "X65n1277_012:0044a02_3": "豈期一疾遽返九泉。",
    "X65n1277_012:0044a02_4": "靈魂渺渺以何歸。",
    "X65n1277_012:0044a02_5": "去路茫茫而不返。",
    "X65n1277_012:0044a03_6": "欲指小祥雲路。",
    "X65n1277_012:0044a03_7": "須憑大覺風規。",
    "X65n1277_012:0044a04_0": "薦母",
    "X65n1277_012:0044a05_0": "泣血三年痛念子羔之志。",
    "X65n1277_012:0044a05_1": "不飲七日重傷曾參之心。",
    "X65n1277_012:0044a06_0": "動王脩輟杜之誠。",
    "X65n1277_012:0044a06_1": "起隱之感隣之歎。",
    "X65n1277_012:0044a06_2": "雖古今之事或異。",
    "X65n1277_012:0044a07_3": "而子母之情不殊。",
    "X65n1277_012:0044a07_4": "痛念(某人)處閻浮世現女人身。",
    "X65n1277_012:0044a08_0": "內克盡於姆儀。",
    "X65n1277_012:0044a08_1": "外允諧於族屬。",
    "X65n1277_012:0044a08_2": "恩深鞠育。",
    "X65n1277_012:0044a08_3": "德備劬勞。",
    "X65n1277_012:0044a09_0": "本期椿筭綿綿不忘戲綵。",
    "X65n1277_012:0044a09_1": "豈謂萱堂寂寂遽起傷心。",
    "X65n1277_012:0044a10_0": "母百日",
    "X65n1277_012:0044a11_0": "萱堂月冷空餘刻木遺蹤。",
    "X65n1277_012:0044a11_1": "蘭砌雲愁遽起感鄰別恨。",
    "X65n1277_012:0044a12_0": "痛念十旬弗返。",
    "X65n1277_012:0044a12_1": "庸資九品追修。",
    "X65n1277_012:0044a12_2": "伏念(母氏)善心有素懿行無虧。",
    "X65n1277_012:0044a13_3": "檢躬溫淑而茂著閨儀。",
    "X65n1277_012:0044a13_4": "應物周旋而曲全婦道。",
    "X65n1277_012:0044a14_5": "一男終老。",
    "X65n1277_012:0044a14_6": "二女得賢。",
    "X65n1277_012:0044a14_7": "孺封方羨於榮觀。",
    "X65n1277_012:0044a14_8": "親眷俄聞於永別。",
    "X65n1277_012:0044a15_9": "曩日之斷機莫睹。",
    "X65n1277_012:0044a15_10": "今朝之戲綵無由。",
    "X65n1277_012:0044a15_11": "不憑淨土以超生。",
    "X65n1277_012:0044a16_12": "曷使亡魂之度脫。",
    "X65n1277_012:0044a17_0": "母小祥",
    "X65n1277_012:0044a18_0": "母以劬勞生我遽興不見之思。",
    "X65n1277_012:0044a18_1": "佛能方便救人敬啟少酬之意。",
    "X65n1277_012:0044a19_2": "伏念(某人)懿行雍容善心純熟。",
    "X65n1277_012:0044a19_3": "傳嗣幸生四子。",
    "X65n1277_012:0044a20_4": "享齡宜盡百年。",
    "X65n1277_012:0044a20_5": "豈謂五旬之餘。",
    "X65n1277_012:0044a20_6": "遽有千秋之別。",
    "X65n1277_012:0044a21_0": "倐忽痛周星之隔。",
    "X65n1277_012:0044a21_1": "悲傷泣淚雨之零。",
    "X65n1277_012:0044a21_2": "無階酬鞠育之恩。",
    "X65n1277_012:0044a22_3": "有佛示往生之路。",
    "X65n1277_012:0044a23_0": "公百日婆六七",
    "X65n1277_012:0044a24_0": "痛念先公歷十旬而弗返。",
    "X65n1277_012:0044a24_1": "翻思祖妣俄六七以偕臨。",
    "X65n1277_012:0044b01_0": "欲薦双魂。",
    "X65n1277_012:0044b01_1": "宜修九品。",
    "X65n1277_012:0044b01_2": "首答變成主。",
    "X65n1277_012:0044b01_3": "兼資平等王。",
    "X65n1277_012:0044b01_4": "望開方便之門。",
    "X65n1277_012:0044b02_5": "各指超昇之路。",
    "X65n1277_012:0044b03_0": "女薦母夫薦妻",
    "X65n1277_012:0044b04_0": "女薦其母徒勞刻木之悲。",
    "X65n1277_012:0044b04_1": "夫拔其妻空憶鼓盆之恨。",
    "X65n1277_012:0044b05_0": "欲使双魂俱度脫。",
    "X65n1277_012:0044b05_1": "須桑三寶為加持。",
    "X65n1277_012:0044b05_2": "孝女(某)痛念亡妣(某氏)。",
    "X65n1277_012:0044b06_3": "夫(某)伏為亡室(某氏)。",
    "X65n1277_012:0044b06_4": "一則義重於生身。",
    "X65n1277_012:0044b06_5": "一則恩深於結髮。",
    "X65n1277_012:0044b07_6": "本是有家親之喜。",
    "X65n1277_012:0044b07_7": "豈期同生死之塗。",
    "X65n1277_012:0044b08_0": "薦子六七母四七",
    "X65n1277_012:0044b09_0": "曰母曰子相繼歸終。",
    "X65n1277_012:0044b09_1": "誦佛誦經用憑救拔。",
    "X65n1277_012:0044b09_2": "爰傾眾志敬薦双魂。",
    "X65n1277_012:0044b10_3": "闡智者之科儀。",
    "X65n1277_012:0044b10_4": "禮觀音之寶懺。",
    "X65n1277_012:0044b10_5": "普答三千大千之聖眾。",
    "X65n1277_012:0044b11_6": "兼酬四七六七之冥王。",
    "X65n1277_012:0044b12_0": "三孫薦祖母叔母",
    "X65n1277_012:0044b13_0": "祖母叔母相先後以歸終。",
    "X65n1277_012:0044b13_1": "長孫次孫同哀號而薦拔。",
    "X65n1277_012:0044b14_0": "(某)等敬念祖母(某氏)叔母(某氏)。",
    "X65n1277_012:0044b14_1": "向值一陰之月。",
    "X65n1277_012:0044b14_2": "方踰兩日之期。",
    "X65n1277_012:0044b15_3": "豈知二位懿魂。",
    "X65n1277_012:0044b15_4": "共返九泉幽壤。",
    "X65n1277_012:0044b16_0": "薦母并妻室首七",
    "X65n1277_012:0044b17_0": "雲慘萱堂莫遂承顏之志。",
    "X65n1277_012:0044b17_1": "風悲蘭室遽傷結髮之情。",
    "X65n1277_012:0044b18_0": "然老少雖曰殊塗。",
    "X65n1277_012:0044b18_1": "而生滅同歸一路。",
    "X65n1277_012:0044b18_2": "敬念亡妣(某氏)享世壽七十五載。",
    "X65n1277_012:0044b19_3": "亡室(某氏)受天數三十二春。",
    "X65n1277_012:0044b19_4": "未離兩日之間。",
    "X65n1277_012:0044b20_5": "同有千秋之別。",
    "X65n1277_012:0044b20_6": "大千不返。",
    "X65n1277_012:0044b20_7": "首七俱臨。",
    "X65n1277_012:0044b20_8": "追修二位之懿魂。",
    "X65n1277_012:0044b21_9": "須仗三乘之聖教。",
    "X65n1277_012:0044b22_0": "薦夫",
    "X65n1277_012:0044b23_0": "共伯之妻人欽自誓之志。",
    "X65n1277_012:0044b23_1": "萃周之婦世聞善哭之聲。",
    "X65n1277_012:0044b24_0": "魂飛湘浦之煙波。",
    "X65n1277_012:0044b24_1": "夢斷楚臺之雲雨。",
    "X65n1277_012:0044b24_2": "伏念亡夫齊家雍穆處己溫良。",
    "X65n1277_012:0044c01_3": "將期成君子偕老之歡。",
    "X65n1277_012:0044c01_4": "豈意發天民無告之歎。",
    "X65n1277_012:0044c02_5": "雖仰天而何補。",
    "X65n1277_012:0044c02_6": "徒望石以興悲。",
    "X65n1277_012:0044c02_7": "欲酬結髮之恩。",
    "X65n1277_012:0044c03_8": "庸仗燃燈之果。",
    "X65n1277_012:0044c04_0": "又",
    "X65n1277_012:0044c05_0": "交歡二姓。",
    "X65n1277_012:0044c05_1": "本期奉箕帚之勤。",
    "X65n1277_012:0044c05_2": "俄別千秋。",
    "X65n1277_012:0044c05_3": "難使效蘋蘩之託。",
    "X65n1277_012:0044c06_4": "切念亡夫(某人)。",
    "X65n1277_012:0044c06_5": "公平處己忠厚待人。",
    "X65n1277_012:0044c06_6": "內睦宗親外諧鄉黨。",
    "X65n1277_012:0044c07_7": "滿謂百年之偕老。",
    "X65n1277_012:0044c07_8": "豈期中道以分飛。",
    "X65n1277_012:0044c08_0": "薦妻",
    "X65n1277_012:0044c09_0": "蘭臺人寂徒興舞鏡之悲。",
    "X65n1277_012:0044c09_1": "鳳閣香鎖爰有鼓盆之歎。",
    "X65n1277_012:0044c10_0": "伏念亡室(某人)。",
    "X65n1277_012:0044c10_1": "夙勤婦道素秘閨儀。",
    "X65n1277_012:0044c10_2": "本期偕老百年。",
    "X65n1277_012:0044c11_0": "豈謂遽終一疾。",
    "X65n1277_012:0044c11_1": "齊眉莫及。",
    "X65n1277_012:0044c11_2": "結髮徒傷。",
    "X65n1277_012:0044c11_3": "雲歸仙嶋暮煙寒。",
    "X65n1277_012:0044c12_4": "花落泉臺春晝永。",
    "X65n1277_012:0044c12_5": "欲超懿魄。",
    "X65n1277_012:0044c12_6": "須仗妙緣。",
    "X65n1277_012:0044c12_7": "梵曲高揚韻續斷絃之奏。",
    "X65n1277_012:0044c13_8": "爐煙消散香和愁霧之飛。",
    "X65n1277_012:0044c14_0": "又",
    "X65n1277_012:0044c15_0": "百年偕老將期結髮之親。",
    "X65n1277_012:0044c15_1": "四大俄空遽起鼓盆之歎。",
    "X65n1277_012:0044c16_0": "切念(亡室)素全婦道曲盡閨儀。",
    "X65n1277_012:0044c16_1": "孝義兩全。",
    "X65n1277_012:0044c16_2": "宗親俱睦。",
    "X65n1277_012:0044c17_0": "兄弟",
    "X65n1277_012:0044c18_0": "原上鶺鴒務篤急難之義。",
    "X65n1277_012:0044c18_1": "雲間鴻鴈忽垂次敘之傷。",
    "X65n1277_012:0044c19_0": "敬念某(亡兄亡弟)道共人倫序連天屬。",
    "X65n1277_012:0044c19_1": "將諧同氣俄有歸真。",
    "X65n1277_012:0044c20_2": "竹林遊地起傷悲。",
    "X65n1277_012:0044c20_3": "棠棣陰中空感嘆。",
    "X65n1277_012:0044c21_0": "薦男",
    "X65n1277_012:0044c22_0": "蘭凋玉砌沉沉之愁霧迷空。",
    "X65n1277_012:0044c22_1": "鳳入丹霄寂寂之悲風匝地。",
    "X65n1277_012:0044c23_2": "伏念亡男(某人)。",
    "X65n1277_012:0044c23_3": "克家令子。",
    "X65n1277_012:0044c23_4": "幹蠱良材。",
    "X65n1277_012:0044c23_5": "本期興忠孝之門。",
    "X65n1277_012:0044c24_6": "全望繼箕裘之業。",
    "X65n1277_012:0044c24_7": "豈知一疾。",
    "X65n1277_012:0044c24_8": "永訣千秋。",
    "X65n1277_012:0045a01_0": "長子溺死",
    "X65n1277_012:0045a02_0": "情傷主器豈期失楫於中流。",
    "X65n1277_012:0045a02_1": "佛願度人庸指乘槎之仙路。",
    "X65n1277_012:0045a03_2": "伏念亡子力學龍門而未透。",
    "X65n1277_012:0045a03_3": "親看蛟水以俄經。",
    "X65n1277_012:0045a04_0": "一夜更闌才效渡湘之年少。",
    "X65n1277_012:0045a04_1": "千秋恨別飜成捉月之謫仙。",
    "X65n1277_012:0045a05_2": "鳴灘響處助哀聲。",
    "X65n1277_012:0045a05_3": "急浪濺時添暗淚。",
    "X65n1277_012:0045a06_0": "薦女",
    "X65n1277_012:0045a07_0": "謝庭蘭殞到底俱空。",
    "X65n1277_012:0045a07_1": "楚峽雲收未知何在。",
    "X65n1277_012:0045a07_2": "伏念亡女善心純熟懿行雍容。",
    "X65n1277_012:0045a08_3": "豈期一疾之來。",
    "X65n1277_012:0045a08_4": "遽有百年之別。",
    "X65n1277_012:0045a09_0": "輙憑佛果。",
    "X65n1277_012:0045a09_1": "少贊仙遊。",
    "X65n1277_012:0045a10_0": "伯叔",
    "X65n1277_012:0045a11_0": "哀心有感痛傷天屬之親。",
    "X65n1277_012:0045a11_1": "誠意無依庸仗佛乘之力。",
    "X65n1277_012:0045a12_0": "伏念(亡伯亡叔)善鍾累世慶出一門。",
    "X65n1277_012:0045a12_1": "為先公胄子之賢(伯稱胄子叔稱季子)。",
    "X65n1277_012:0045a13_2": "乃我父連枝之愛。",
    "X65n1277_012:0045a13_3": "將謂享長年之筭。",
    "X65n1277_012:0045a13_4": "豈期終百歲之天。",
    "X65n1277_012:0045a15_0": "姊妹",
    "X65n1277_012:0045a16_0": "天倫共稟莫非同歲連枝。",
    "X65n1277_012:0045a16_1": "世事歸空難免出生入死。",
    "X65n1277_012:0045a17_0": "伏念(亡姊亡妹)所育雖同於父母。",
    "X65n1277_012:0045a17_1": "于歸各配於室家。",
    "X65n1277_012:0045a17_2": "棣華將謂於聯芳。",
    "X65n1277_012:0045a18_3": "鴈序遽傷於痛別。",
    "X65n1277_012:0045a19_0": "丈人",
    "X65n1277_012:0045a20_0": "雲愁慘慘空傷太岳之頹。",
    "X65n1277_012:0045a20_1": "雨泣漣漣濫發東床之歎。",
    "X65n1277_012:0045a21_0": "雖曰冰清而玉潤。",
    "X65n1277_012:0045a21_1": "難逃死去以生來。",
    "X65n1277_012:0045a21_2": "伏念丈人某。",
    "X65n1277_012:0045a21_3": "德稟寬洪。",
    "X65n1277_012:0045a22_4": "恩均內外。",
    "X65n1277_012:0045a22_5": "私喜一門之幸。",
    "X65n1277_012:0045a22_6": "得伸半子之親。",
    "X65n1277_012:0045a22_7": "豈期四大之空。",
    "X65n1277_012:0045a23_8": "遽有千秋之別。",
    "X65n1277_012:0045a24_0": "丈母",
    "X65n1277_012:0045b01_0": "雲愁半夜痛傷岳母之俄傾。",
    "X65n1277_012:0045b01_1": "雨泣新秋忍對門闌之發歎。",
    "X65n1277_012:0045b02_2": "千秋遽別。",
    "X65n1277_012:0045b02_3": "半子何依。",
    "X65n1277_012:0045b02_4": "欲懿魄之超昇。",
    "X65n1277_012:0045b02_5": "仗善因而薦拔。",
    "X65n1277_012:0045b03_6": "敬念丈母某人。",
    "X65n1277_012:0045b03_7": "生男克孝譽已振於北堂。",
    "X65n1277_012:0045b03_8": "育女有家愛特崇於東坦。",
    "X65n1277_012:0045b04_9": "將謂享百年之壽。",
    "X65n1277_012:0045b04_10": "豈期為一疾之終。",
    "X65n1277_012:0045b05_11": "曉山黯黯散愁雲。",
    "X65n1277_012:0045b05_12": "夜壑茫茫奔逝水。",
    "X65n1277_012:0045b06_0": "女婿",
    "X65n1277_012:0045b07_0": "愁結門闌遽爾東床之逝。",
    "X65n1277_012:0045b07_1": "淚零衣袖痛傷半子之亡。",
    "X65n1277_012:0045b08_0": "不資物外之善緣。",
    "X65n1277_012:0045b08_1": "莫薦門中之貴客。",
    "X65n1277_012:0045b08_2": "伏念亡婿(某人)。",
    "X65n1277_012:0045b09_0": "賢鍾盛世。",
    "X65n1277_012:0045b09_1": "族出名家。",
    "X65n1277_012:0045b09_2": "內諧父母之歡。",
    "X65n1277_012:0045b09_3": "外擅里閭之譽。",
    "X65n1277_012:0045b10_0": "滿謂篤親之義。",
    "X65n1277_012:0045b10_1": "常修致敬之儀。",
    "X65n1277_012:0045b10_2": "豈期天不福謙。",
    "X65n1277_012:0045b10_3": "遽使身先歸土。",
    "X65n1277_012:0045b12_0": "又",
    "X65n1277_012:0045b13_0": "門闌有託望諧中雀之緣。",
    "X65n1277_012:0045b13_1": "風火無憑遽失化龍之望。",
    "X65n1277_012:0045b14_0": "欲伸薦拔。",
    "X65n1277_012:0045b14_1": "庸仗慈悲。",
    "X65n1277_012:0045b15_0": "薦商死",
    "X65n1277_012:0045b16_0": "往而不返。",
    "X65n1277_012:0045b16_1": "仲尼傷逝水之嗟。",
    "X65n1277_012:0045b16_2": "去而不歸。",
    "X65n1277_012:0045b16_3": "莊叟起失家之嘆。",
    "X65n1277_012:0045b17_4": "死生惟命之極。",
    "X65n1277_012:0045b17_5": "行止非人所能伏。",
    "X65n1277_012:0045b17_6": "念某人孤矢銘心盖有四方之志。",
    "X65n1277_012:0045b18_7": "駒騮命駕能馳千里之念。",
    "X65n1277_012:0045b18_8": "每運舟車阜通貨賄。",
    "X65n1277_012:0045b19_9": "遠取征商之利。",
    "X65n1277_012:0045b19_10": "將求潤屋之資。",
    "X65n1277_012:0045b19_11": "豈期善願未圓。",
    "X65n1277_012:0045b20_12": "那覺天年不永。",
    "X65n1277_012:0045b20_13": "征魂杳杳九泉冥路去何長。",
    "X65n1277_012:0045b21_14": "逝魄茫茫萬里思親歸不得。",
    "X65n1277_012:0045b21_15": "虔修淨土。",
    "X65n1277_012:0045b21_16": "資薦去程。",
    "X65n1277_012:0045b22_0": "僧薦本師(開華嚴經)",
    "X65n1277_012:0045b23_0": "釋迦文佛何妨示寂雙林。",
    "X65n1277_012:0045b23_1": "達磨大師不免西歸葱嶺。",
    "X65n1277_012:0045b24_0": "雖法身本無生滅。",
    "X65n1277_012:0045b24_1": "然乳恩敢後酬償。",
    "X65n1277_012:0045b24_2": "欲增般若之妙光。",
    "X65n1277_012:0045c01_3": "必假華嚴之大教。",
    "X65n1277_012:0045c01_4": "恭惟圓寂本師大德。",
    "X65n1277_012:0045c01_5": "堂堂儀表寂然彌勒下生來。",
    "X65n1277_012:0045c02_6": "了了禪機儼若玄沙不出嶺。",
    "X65n1277_012:0045c02_7": "龍山尊宿。",
    "X65n1277_012:0045c03_8": "[魚*戔]水宗師。",
    "X65n1277_012:0045c03_9": "戒行共霜月爭明。",
    "X65n1277_012:0045c03_10": "梵音與風雷齊震。",
    "X65n1277_012:0045c04_0": "忽朝猛省。",
    "X65n1277_012:0045c04_1": "拂袖便行。",
    "X65n1277_012:0045c04_2": "衣傳已付嶺頭人。",
    "X65n1277_012:0045c04_3": "背痛翻為塵外侶。",
    "X65n1277_012:0045c05_4": "今當三十有五日曷報師資。",
    "X65n1277_012:0045c05_5": "用開一百二十函少陪雲路。",
    "X65n1277_012:0045c07_0": "薦亡伏願門",
    "X65n1277_012:0045c08_0": "通用",
    "X65n1277_012:0045c09_0": "塵勞蠲淨廓爾而雲散天清。",
    "X65n1277_012:0045c09_1": "業障頓除豁然而冰消雪釋。",
    "X65n1277_012:0045c10_2": "識心達本。",
    "X65n1277_012:0045c10_3": "息意忘緣。",
    "X65n1277_012:0045c10_4": "於去來中悟無去來。",
    "X65n1277_012:0045c10_5": "於生滅中悟無生滅。",
    "X65n1277_012:0045c11_6": "絕離幻妄。",
    "X65n1277_012:0045c11_7": "正趍真空。",
    "X65n1277_012:0045c11_8": "破三毒而證三藐三菩提。",
    "X65n1277_012:0045c12_9": "収六賊而修六度六神用。",
    "X65n1277_012:0045c12_10": "了知生滅法。",
    "X65n1277_012:0045c12_11": "方明無我人。",
    "X65n1277_012:0045c13_12": "不出菩薩林。",
    "X65n1277_012:0045c13_13": "常居華藏海。",
    "X65n1277_012:0045c14_0": "又",
    "X65n1277_012:0045c15_0": "數行仙樂迎歸紫府之間。",
    "X65n1277_012:0045c15_1": "三色祥雲引出塵寰之外。",
    "X65n1277_012:0045c16_0": "拋離五障。",
    "X65n1277_012:0045c16_1": "逈脫六塵。",
    "X65n1277_012:0045c16_2": "當生慈氏之宮。",
    "X65n1277_012:0045c16_3": "早入龍華之會。",
    "X65n1277_012:0045c17_0": "又",
    "X65n1277_012:0045c18_0": "黃金殿內常瞻紫磨之身。",
    "X65n1277_012:0045c18_1": "紅藕花心時聽苦空之偈。",
    "X65n1277_012:0045c19_0": "又",
    "X65n1277_012:0045c20_0": "四生海上卸愚癡帆。",
    "X65n1277_012:0045c20_1": "三覺岸頭斷沉迷綱。",
    "X65n1277_012:0045c20_2": "出娑婆之世界。",
    "X65n1277_012:0045c21_3": "生兜率之天宮。",
    "X65n1277_012:0045c21_4": "時時面奉玉毫。",
    "X65n1277_012:0045c21_5": "日日耳聞妙法。",
    "X65n1277_012:0045c22_0": "曉了即心即佛。",
    "X65n1277_012:0045c22_1": "頓明非想非空。",
    "X65n1277_012:0045c22_2": "得般若波羅蜜多。",
    "X65n1277_012:0045c22_3": "成無上正遍知覺。",
    "X65n1277_012:0045c24_0": "又",
    "X65n1277_012:0046a01_0": "無邊煩惱海徹底乾枯。",
    "X65n1277_012:0046a01_1": "無量智慧花廓然開發。",
    "X65n1277_012:0046a02_0": "又",
    "X65n1277_012:0046a03_0": "上冐七重之網。",
    "X65n1277_012:0046a03_1": "下乘千葉之蓮。",
    "X65n1277_012:0046a03_2": "飄飄生覩史之天。",
    "X65n1277_012:0046a03_3": "濟濟步摩尼之殿。",
    "X65n1277_012:0046a04_4": "面瞻金相。",
    "X65n1277_012:0046a04_5": "耳聽法音。",
    "X65n1277_012:0046a05_0": "又",
    "X65n1277_012:0046a06_0": "瑤池萬仞。",
    "X65n1277_012:0046a06_1": "金風動而蓮上生花。",
    "X65n1277_012:0046a06_2": "寶閣千層。",
    "X65n1277_012:0046a06_3": "珠簾卷而雲中見佛。",
    "X65n1277_012:0046a08_0": "又",
    "X65n1277_012:0046a09_0": "寶坊寶盖乘寶馬以優游。",
    "X65n1277_012:0046a09_1": "香國香城躡香雲而快樂。",
    "X65n1277_012:0046a10_0": "又",
    "X65n1277_012:0046a11_0": "寶網玲瓏之下。",
    "X65n1277_012:0046a11_1": "天花縹緲之中。",
    "X65n1277_012:0046a11_2": "禮十號慈尊。",
    "X65n1277_012:0046a11_3": "悟一乘妙理。",
    "X65n1277_012:0046a13_0": "又",
    "X65n1277_012:0046a14_0": "須菩提彈指之處認取千聖之門。",
    "X65n1277_012:0046a14_1": "大迦葉破顏之時頓悟一真之理。",
    "X65n1277_012:0046a16_0": "又",
    "X65n1277_012:0046a17_0": "普光堂上回凡心而作佛心。",
    "X65n1277_012:0046a17_1": "菩提殿中轉肉眼而為慧眼。",
    "X65n1277_012:0046a18_2": "步步紅蓮開足下。",
    "X65n1277_012:0046a18_3": "翩翩青盖起空中。",
    "X65n1277_012:0046a18_4": "拋三漏之塵勞。",
    "X65n1277_012:0046a19_5": "生十嚴之淨地。",
    "X65n1277_012:0046a19_6": "入寶冠裏。",
    "X65n1277_012:0046a19_7": "坐師子床。",
    "X65n1277_012:0046a19_8": "一聞大悟之因緣。",
    "X65n1277_012:0046a20_9": "便證無為之至理。",
    "X65n1277_012:0046a21_0": "又",
    "X65n1277_012:0046a22_0": "真明明之。",
    "X65n1277_012:0046a22_1": "法眼登須彌頂而爍破四天。",
    "X65n1277_012:0046a22_2": "悟了了之。",
    "X65n1277_012:0046a22_3": "真心向微塵裏而坐觀三界。",
    "X65n1277_012:0046a24_0": "又",
    "X65n1277_012:0046b01_0": "真心自在。",
    "X65n1277_012:0046b01_1": "法性逍遙。",
    "X65n1277_012:0046b01_2": "不入三乘。",
    "X65n1277_012:0046b01_3": "便登正覺。",
    "X65n1277_012:0046b01_4": "悟無所悟之法。",
    "X65n1277_012:0046b02_5": "證無所證之門。",
    "X65n1277_012:0046b02_6": "生生披如來忍辱之衣。",
    "X65n1277_012:0046b02_7": "世世處諸佛慈悲之寶。",
    "X65n1277_012:0046b04_0": "又",
    "X65n1277_012:0046b05_0": "障雲散而菩提月現。",
    "X65n1277_012:0046b05_1": "業海枯而功德山高。",
    "X65n1277_012:0046b05_2": "不入邪宗。",
    "X65n1277_012:0046b06_0": "常生正念。",
    "X65n1277_012:0046b07_0": "又",
    "X65n1277_012:0046b08_0": "七寶池中盡滌業障報障煩惱障。",
    "X65n1277_012:0046b08_1": "九蓮臺上常聞妙音梵音海潮音。",
    "X65n1277_012:0046b10_0": "又",
    "X65n1277_012:0046b11_0": "摧煩惱之山。",
    "X65n1277_012:0046b11_1": "裂愛慾之網。",
    "X65n1277_012:0046b11_2": "心疑頓釋若解百疊之花巾。",
    "X65n1277_012:0046b12_3": "罪垢潛消如散八風之沙聚。",
    "X65n1277_012:0046b13_0": "婦人",
    "X65n1277_012:0046b14_0": "十惡五逆悉冰消。",
    "X65n1277_012:0046b14_1": "三毒七情俱雪懺。",
    "X65n1277_012:0046b14_2": "五漏化為無漏。",
    "X65n1277_012:0046b15_0": "六根變作善根。",
    "X65n1277_012:0046b15_1": "仗一乘薦悼之功。",
    "X65n1277_012:0046b15_2": "指九品往生之路。",
    "X65n1277_012:0046b16_0": "好隨玉女迎埽蓬嶋仙山。",
    "X65n1277_012:0046b16_1": "長伴姮娥直返蟾宮月殿。",
    "X65n1277_012:0046b17_0": "東海觀音親授記。",
    "X65n1277_012:0046b17_1": "南方龍女願同參。",
    "X65n1277_012:0046b17_2": "速出迷途。",
    "X65n1277_012:0046b17_3": "早登覺苑。",
    "X65n1277_012:0046b19_0": "又",
    "X65n1277_012:0046b20_0": "業菓凋零。",
    "X65n1277_012:0046b20_1": "罪花殞謝。",
    "X65n1277_012:0046b20_2": "便登海岸禮觀音菩薩之容。",
    "X65n1277_012:0046b20_3": "長向雪山侍摩耶夫人之側。",
    "X65n1277_012:0046b22_0": "雙魂",
    "X65n1277_012:0046b23_0": "毗盧華藏不妨步步相隨。",
    "X65n1277_012:0046b23_1": "淨土蓮臺如信人人有分。",
    "X65n1277_012:0046b24_0": "寧拘曰老曰少。",
    "X65n1277_012:0046b24_1": "從教同号同名。",
    "X65n1277_012:0046b24_2": "鸞車對對返璇穹。",
    "X65n1277_012:0046b24_3": "鳳輦雙雙歸寶洞。",
    "X65n1277_012:0046c01_4": "合簪並進共乘般若之舟。",
    "X65n1277_012:0046c01_5": "携手同行齊到波羅彼岸。",
    "X65n1277_012:0046c03_0": "又",
    "X65n1277_012:0046c04_0": "俱乘有作之因。",
    "X65n1277_012:0046c04_1": "各指往生之路。",
    "X65n1277_012:0046c04_2": "紅蓮臺上不妨步步相隨。",
    "X65n1277_012:0046c05_3": "碧玉堦前管取頭頭尋着。",
    "X65n1277_012:0046c05_4": "九品齊登上品。",
    "X65n1277_012:0046c05_5": "三乘共證上乘。",
    "X65n1277_012:0046c06_6": "翻身接引上天堂。",
    "X65n1277_012:0046c06_7": "携手逍遙歸佛國。",
    "X65n1277_012:0046c07_0": "又",
    "X65n1277_012:0046c08_0": "厖眉慈母早隨佛母返天宮。",
    "X65n1277_012:0046c08_1": "鴛帳嬌娥好共妲娥歸月殿。",
    "X65n1277_012:0046c09_2": "兩片綵雲輕襯足。",
    "X65n1277_012:0046c09_3": "一雙寶網為嚴身。",
    "X65n1277_012:0046c09_4": "生前既結於家親。",
    "X65n1277_012:0046c10_5": "歿後齊登於佛國。",
    "X65n1277_012:0046c11_0": "溺死",
    "X65n1277_012:0046c12_0": "不憑聖澤。",
    "X65n1277_012:0046c12_1": "難脫迷津。",
    "X65n1277_012:0046c12_2": "霈為終七之恩波。",
    "X65n1277_012:0046c12_3": "洗去大千之罪垢。",
    "X65n1277_012:0046c13_4": "鵬海化為福海。",
    "X65n1277_012:0046c13_5": "龍宮變作天宮。",
    "X65n1277_012:0046c13_6": "雲漢逍遙免萬劫沉淪之苦。",
    "X65n1277_012:0046c14_7": "星橋快樂無三途出沒之憂。",
    "X65n1277_012:0046c14_8": "願假慈舟。",
    "X65n1277_012:0046c15_0": "早登彼岸。",
    "X65n1277_012:0046c16_0": "又",
    "X65n1277_012:0046c17_0": "愛河浪闊期彼岸以高登。",
    "X65n1277_012:0046c17_1": "苦海波深假慈舟而普渡。",
    "X65n1277_012:0046c18_0": "又",
    "X65n1277_012:0046c19_0": "不滯中流即登彼岸。",
    "X65n1277_012:0046c19_1": "禮水藏慈悲之相。",
    "X65n1277_012:0046c19_2": "聞海潮微妙之音。",
    "X65n1277_012:0046c21_0": "又",
    "X65n1277_012:0046c22_0": "滌除玄覧。",
    "X65n1277_012:0046c22_1": "涵泳聖涯。",
    "X65n1277_012:0046c22_2": "指佛波羅門。",
    "X65n1277_012:0046c22_3": "离世浮沉海。",
    "X65n1277_012:0046c22_4": "騎李白鯨鯤之背。",
    "X65n1277_012:0046c23_5": "訪張騫牛斗之星。",
    "X65n1277_012:0046c23_6": "兩腋清風笑傲三山之蓬嶋。",
    "X65n1277_012:0046c24_7": "一溪流水優游千古之桃源。",
    "X65n1277_012:0046c24_8": "度達有阿羅聖僧。",
    "X65n1277_012:0047a01_9": "引接得水藏菩薩。",
    "X65n1277_012:0047a02_0": "薦僧",
    "X65n1277_012:0047a03_0": "身期成於正道步步躡於遙天。",
    "X65n1277_012:0047a03_1": "心冀了於妄源去去乘於翠輦。",
    "X65n1277_012:0047a04_2": "入四禪地。",
    "X65n1277_012:0047a04_3": "具一性空。",
    "X65n1277_012:0047a04_4": "趺猊座高廣之間。",
    "X65n1277_012:0047a04_5": "覩龍樹芳菲之相。",
    "X65n1277_012:0047a05_6": "一明圓覺。",
    "X65n1277_012:0047a05_7": "頓悟真常。",
    "X65n1277_012:0047a07_0": "高峰龍泉院因師集賢語錄卷之十二"
}