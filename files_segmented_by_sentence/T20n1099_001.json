[
    {
        "source_sentence": "佛說聖觀自在菩薩不空王祕密",
        "from": "T20n1099_001:0443b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心陀羅尼經",
        "from": "T20n1099_001:0443b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T20n1099_001:0443b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師賜紫臣施護等奉　詔譯如是我聞。",
        "from": "T20n1099_001:0443b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊在補陀落迦山聖觀自在菩薩宮中。",
        "from": "T20n1099_001:0443b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有無數大娑羅樹。",
        "from": "T20n1099_001:0443b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多摩羅樹瞻波迦樹。",
        "from": "T20n1099_001:0443b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿輸迦樹阿提目多迦樹。",
        "from": "T20n1099_001:0443b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等種種寶樹而為嚴飾。",
        "from": "T20n1099_001:0443b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大苾芻眾一百八十萬。",
        "from": "T20n1099_001:0443b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩九十俱胝那庾多百千。",
        "from": "T20n1099_001:0443b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有自在大自在等諸梵天子。",
        "from": "T20n1099_001:0443b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及無數百千淨光天子。",
        "from": "T20n1099_001:0443b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等眾恭敬圍繞聽受說法。",
        "from": "T20n1099_001:0443b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聖觀自在菩薩摩訶薩從座而起。",
        "from": "T20n1099_001:0443b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩右膝著地。",
        "from": "T20n1099_001:0443b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛合掌恭敬頂禮。",
        "from": "T20n1099_001:0443b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熙怡微笑前白佛言。",
        "from": "T20n1099_001:0443c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我有陀羅尼名不空王是祕密心。",
        "from": "T20n1099_001:0443c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃往過去九十一劫之前。",
        "from": "T20n1099_001:0443c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於普觀世界觀自在王如來所親從聽受。",
        "from": "T20n1099_001:0443c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼如來為無數百千諸梵天子并淨光天子眾。",
        "from": "T20n1099_001:0443c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教授阿耨多羅三藐三菩提法。",
        "from": "T20n1099_001:0443c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於爾時證得不空智等百千三摩地門。",
        "from": "T20n1099_001:0443c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若諸方處有此祕密心陀羅尼宣通流布。",
        "from": "T20n1099_001:0443c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是處有大自在等一萬二千天子密作衛護。",
        "from": "T20n1099_001:0443c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是處即同有諸佛塔。",
        "from": "T20n1099_001:0443c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當尊重恭敬供養。",
        "from": "T20n1099_001:0443c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人以此不空王祕密心陀羅尼廣流布者。",
        "from": "T20n1099_001:0443c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人已於無數俱胝那庾多百千佛所深種善根。",
        "from": "T20n1099_001:0443c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人暫得聞此陀羅尼者。",
        "from": "T20n1099_001:0443c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人設復謗佛謗法。",
        "from": "T20n1099_001:0443c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及謗菩薩聲聞緣覺等諸賢聖。",
        "from": "T20n1099_001:0443c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣造如是極重罪業。",
        "from": "T20n1099_001:0443c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮阿鼻地獄者。",
        "from": "T20n1099_001:0443c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能志心於一日中清淨不食。",
        "from": "T20n1099_001:0443c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法持誦此陀羅尼。",
        "from": "T20n1099_001:0443c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等罪皆得銷滅。",
        "from": "T20n1099_001:0443c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人患諸瘧病。",
        "from": "T20n1099_001:0443c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一日二日乃至七日。",
        "from": "T20n1099_001:0443c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復眼痛耳痛鼻痛頭痛。",
        "from": "T20n1099_001:0443c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復疥癩瘡癬癰疽腫疱。",
        "from": "T20n1099_001:0443c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及為一切非人邪鬼。",
        "from": "T20n1099_001:0443c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執魅持捉禁縛打擲。",
        "from": "T20n1099_001:0443c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪咀期剋邪說惑亂。",
        "from": "T20n1099_001:0443c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以要言之。",
        "from": "T20n1099_001:0443c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總集一切身病心病。",
        "from": "T20n1099_001:0443c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至夢中見不祥事者。",
        "from": "T20n1099_001:0443c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此陀羅尼加持力故。",
        "from": "T20n1099_001:0443c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得銷滅無能為害。",
        "from": "T20n1099_001:0443c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊又復若諸剎帝利婆羅門吠舍首陀。",
        "from": "T20n1099_001:0443c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等族姓中設有諂誑心者。",
        "from": "T20n1099_001:0443c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此陀羅尼亦許聽受書寫讀誦。",
        "from": "T20n1099_001:0443c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切傍生異類。",
        "from": "T20n1099_001:0443c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應為彼念此陀羅尼令其得聞。",
        "from": "T20n1099_001:0443c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已隨應皆獲利益。",
        "from": "T20n1099_001:0443c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復有諸發生清淨信解心者。",
        "from": "T20n1099_001:0443c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻苾芻尼優婆塞優婆夷。",
        "from": "T20n1099_001:0443c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心聽受此陀羅尼邪。",
        "from": "T20n1099_001:0443c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復有人。",
        "from": "T20n1099_001:0443c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於此陀羅尼祕密章句諦心思念。",
        "from": "T20n1099_001:0443c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時應當離諸過失。",
        "from": "T20n1099_001:0443c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂不謗不讚不生疑惑。",
        "from": "T20n1099_001:0444a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起離我心無久近心。",
        "from": "T20n1099_001:0444a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無造作心無染污心無高下心。",
        "from": "T20n1099_001:0444a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住如是心作念佛觀。",
        "from": "T20n1099_001:0444a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人即於十方各見千佛為現其前。",
        "from": "T20n1099_001:0444a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若諸白衣舍中。",
        "from": "T20n1099_001:0444a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有是陀羅尼經處。",
        "from": "T20n1099_001:0444a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若主若僕見是經已。",
        "from": "T20n1099_001:0444a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設生輕易或復戲笑。",
        "from": "T20n1099_001:0444a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我威神力故。",
        "from": "T20n1099_001:0444a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其自然得聞此陀羅尼聲。",
        "from": "T20n1099_001:0444a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊譬如有人取栴檀香。",
        "from": "T20n1099_001:0444a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復龍腦或復麝香。",
        "from": "T20n1099_001:0444a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持以敲打或復剉斫。",
        "from": "T20n1099_001:0444a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以呪詞而為呪咀。",
        "from": "T20n1099_001:0444a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於麁獷石上而以研磨。",
        "from": "T20n1099_001:0444a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用塗身分。",
        "from": "T20n1099_001:0444a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有人言。",
        "from": "T20n1099_001:0444a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿須敲打剉斫呪呾研磨。",
        "from": "T20n1099_001:0444a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "栴檀等香既塗身已。",
        "from": "T20n1099_001:0444a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其香常在。",
        "from": "T20n1099_001:0444a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我此不空王祕密心陀羅尼亦復如是。",
        "from": "T20n1099_001:0444a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設或有人雖生輕易或復戲笑。",
        "from": "T20n1099_001:0444a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無誠實心。",
        "from": "T20n1099_001:0444a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但能供養此陀羅尼者。",
        "from": "T20n1099_001:0444a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人以是供養善根力故。",
        "from": "T20n1099_001:0444a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世世所生常得戒定慧等。",
        "from": "T20n1099_001:0444a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸蘊具足妙香芬馥。",
        "from": "T20n1099_001:0444a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次若有苾芻苾芻尼優婆塞優婆夷等。",
        "from": "T20n1099_001:0444a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲受持此不空王祕密心陀羅尼時。",
        "from": "T20n1099_001:0444a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於白月八日依法安布壇場供養。",
        "from": "T20n1099_001:0444a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當須清淨不食。",
        "from": "T20n1099_001:0444a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無緣心誦此祕密心陀羅尼七遍。",
        "from": "T20n1099_001:0444a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人當得二十種功德。",
        "from": "T20n1099_001:0444a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者當於富貴中生。",
        "from": "T20n1099_001:0444a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者生已所有宿世業病速得銷滅。",
        "from": "T20n1099_001:0444a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者常得身胑細滑妙好。",
        "from": "T20n1099_001:0444a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根隱密人所愛樂。",
        "from": "T20n1099_001:0444a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者得大財利。",
        "from": "T20n1099_001:0444a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者所有財寶不為盜取。",
        "from": "T20n1099_001:0444a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者所有財寶不為火焚水溺。",
        "from": "T20n1099_001:0444a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者常得田疇增廣。",
        "from": "T20n1099_001:0444a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者其田稼穡不為雷雹損傷。",
        "from": "T20n1099_001:0444a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者其田不為惡雨霖澍。",
        "from": "T20n1099_001:0444a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者色力精神無所損耗。",
        "from": "T20n1099_001:0444a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一者常得一切眾生尊重愛樂。",
        "from": "T20n1099_001:0444a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二者不為一切怨對所怖。",
        "from": "T20n1099_001:0444a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三者設有怨對速疾除解。",
        "from": "T20n1099_001:0444a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四者不為一切非人所怖。",
        "from": "T20n1099_001:0444a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五者不為惡病纏縛。",
        "from": "T20n1099_001:0444a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六者不為拏枳儞怖。",
        "from": "T20n1099_001:0444a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七者遠離一切煩惱等事。",
        "from": "T20n1099_001:0444b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八者不於水火刀兵毒害中死。",
        "from": "T20n1099_001:0444b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九者在處常得諸賢聖等密作衛護。",
        "from": "T20n1099_001:0444b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十者在在所生常得不離慈悲喜捨。",
        "from": "T20n1099_001:0444b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是名為二十種功德。",
        "from": "T20n1099_001:0444b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次世尊若有持誦此陀羅尼者。",
        "from": "T20n1099_001:0444b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別得八種善相。",
        "from": "T20n1099_001:0444b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者臨命終時我作苾芻相為現其前。",
        "from": "T20n1099_001:0444b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者臨命終時目不動亂身心安隱。",
        "from": "T20n1099_001:0444b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者臨命終時手不拏空足不蹴地。",
        "from": "T20n1099_001:0444b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無大小便利穢污狼藉。",
        "from": "T20n1099_001:0444b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者不覆面死。",
        "from": "T20n1099_001:0444b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者臨命終時安住正念。",
        "from": "T20n1099_001:0444b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者臨命終時不離善友。",
        "from": "T20n1099_001:0444b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者命終已後諸佛剎中隨願往生。",
        "from": "T20n1099_001:0444b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者當生獲得無盡辯才。",
        "from": "T20n1099_001:0444b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是名為八種善相。",
        "from": "T20n1099_001:0444b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次世尊。",
        "from": "T20n1099_001:0444b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人能清淨不食。",
        "from": "T20n1099_001:0444b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離五辛一切葷雜。",
        "from": "T20n1099_001:0444b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於日三時中念此陀羅尼三遍。",
        "from": "T20n1099_001:0444b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所求皆得成就。",
        "from": "T20n1099_001:0444b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人隨應得聞此不空王祕密心陀羅尼正法已。",
        "from": "T20n1099_001:0444b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能斷諸慳嫉除去一切垢染。",
        "from": "T20n1099_001:0444b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發清淨心尊重歸命祕密護持者。",
        "from": "T20n1099_001:0444b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人當得墮菩薩數。",
        "from": "T20n1099_001:0444b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善為眾生作大饒益。",
        "from": "T20n1099_001:0444b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟當成佛菩提果。",
        "from": "T20n1099_001:0444b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此言菩提者即是正慧。",
        "from": "T20n1099_001:0444b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩埵者即是方便。",
        "from": "T20n1099_001:0444b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得如是慧及方便二法具足。",
        "from": "T20n1099_001:0444b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能為眾生作饒益事。",
        "from": "T20n1099_001:0444b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聖觀自在菩薩摩訶薩復白佛言。",
        "from": "T20n1099_001:0444b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今樂欲於如來前。",
        "from": "T20n1099_001:0444b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說所有祕密心陀羅尼。",
        "from": "T20n1099_001:0444b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令會中四眾得聞利益安樂。",
        "from": "T20n1099_001:0444b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘一切作罪業者亦獲善利。",
        "from": "T20n1099_001:0444b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告聖觀自在菩薩摩訶薩言。",
        "from": "T20n1099_001:0444b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨大士汝應善說今正是時。",
        "from": "T20n1099_001:0444b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來今日亦當隨喜。",
        "from": "T20n1099_001:0444b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至後末世中。",
        "from": "T20n1099_001:0444b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與修菩薩乘者為善依怙。",
        "from": "T20n1099_001:0444b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時聖觀自在菩薩欣然舉目瞻仰世尊。",
        "from": "T20n1099_001:0444b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前白佛言。",
        "from": "T20n1099_001:0444c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此會諸菩薩眾。",
        "from": "T20n1099_001:0444c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應善諦聽復當歸命。",
        "from": "T20n1099_001:0444c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此解脫輪能與多人利益安樂。",
        "from": "T20n1099_001:0444c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲愍世間善作一切大利樂事。",
        "from": "T20n1099_001:0444c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今宣說此陀羅尼。",
        "from": "T20n1099_001:0444c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我先歸命過去未來現在三世善住諸佛菩薩。",
        "from": "T20n1099_001:0444c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及彼三世一切聲聞緣覺。",
        "from": "T20n1099_001:0444c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復歸命無量光如來應供正等正覺。",
        "from": "T20n1099_001:0444c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命慈氏等諸菩薩摩訶薩。",
        "from": "T20n1099_001:0444c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命大智舍利子等諸阿羅漢。",
        "from": "T20n1099_001:0444c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T20n1099_001:0444c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨引囉怛那二合怛囉二合夜引野一句那莫阿引哩也二合引嚩路吉帝引說囉引野二󰂛地薩埵引野摩賀引薩埵引野三摩賀引哥嚕尼哥引野四伊毘踰二合引那莫塞訖哩三合埵引五壹唐阿引哩也二合引嚩路引吉帝引說囉目枯引捺儗二合引蘭𧹞二合引六阿謨引伽播引商那引摩紇哩二合捺煬七怛他引誐多三目珂婆引始檐八摩訶怛波哩沙二合那末提引阿訶彌那引泥引摩引嚩哩多二合曳沙曳二合九悉𮊯切身下同覩彌引薩哩嚩二合哥引哩也二合引尼薩哩嚩二合婆曳數左彌引十犖力角切下同叉引婆嚩覩十一怛𭔞切身他引十二唵引左囉左囉十三唧哩唧哩十四祖嚕祖嚕十五摩賀引哥引嚕尼哥十六悉哩悉哩十七唧哩唧哩十八尾哩尾哩十九摩賀引鉢訥摩二合訶薩多二合引野二十葛羅葛羅二十一枳里枳里二十二酤魯酤魯二十三摩賀引戍馱薩埵引野二十四沒𠆙切身下同沒𠆙二十五馱引嚩馱引嚩二十六枳尼枳尼二十七波囉摩戍馱薩埵引野二十八葛囉葛囉二十九枳哩枳哩三十酤嚕酤嚕三十一摩賀引塞他二合摩鉢囉二合引鉢多二合引野三十二左羅左羅三十三三左羅三十四尾左羅三十五伊吒吒伊吒吒三十六婆囉婆囉三十七毘哩毘哩三十八部嚕部嚕三十九伊係曳二合引呬摩賀引哥引嚕尼哥四十摩賀引鉢輸鉢底四十一尾引沙馱囉四十二薩囉薩囉四十三嚩囉嚩囉四十四波囉波囉四十五嚩囉嚩囉四十六訶囉訶囉四十七賀引賀引四十八係引係引四十九呼引呼引五十唵引哥引囉五十一沒囉二合賀摩二合尾沙馱囉五十二馱囉馱囉五十三提哩提哩五十四度嚕度嚕五十五多囉多囉五十六薩囉薩囉五十七波囉波囉五十八嚩囉嚩囉五十九囉濕彌二合設多薩訶薩囉二合六十鉢囉二合底曼尼多設哩引囉六十一入嚩二合羅入嚩二合羅六十二多波多波六十三婆誐鑁六十四蘇引摩六十五阿引禰爹六十六野摩六十七嚩嚕拏六十八酤尾引囉六十九沒囉二合賀摩二合七十印捺囉二合七十一哩施七十二泥引嚩誐拏引毘野二合哩唧二合多左囉拏七十三蘇嚕蘇嚕七十四祖嚕祖嚕七十五母嚕母嚕七十六薩那怛酤二合摩引囉七十七嚕捺囉二合嚩引薩嚩七十八尾瑟努二合七十九達那捺八十哩施八十一尾那引野葛八十二末虎尾尾馱尾引沙馱囉八十三馱囉馱囉八十四提哩提哩八十五度嚕度嚕八十六伽囉伽囉八十七波囉波囉八十八羅囉羅囉八十九羅虎羅虎九十訶囉訶囉九十一摩囉摩囉九十二嚩囉嚩囉九十三嚩囉那引野葛九十四三曼多引嚩路引吉多尾路引吉多九十五路吉說囉摩呬引說囉九十六母虎母虎九十七母嚕母嚕九十八母野母野九十九捫左捫左一百犖叉犖叉引摩摩薩哩嚩二合薩埵引室左二合薩哩嚩二合婆曳引毘藥二合一百一薩哩舞二合引波捺囉二合尾引毘藥二合一百二薩哩舞二合引波薩哩詣二合引一百三薩哩嚩二合誐囉二合係引毘藥二合一百四末馱一百五曼馱那一百六多引拏那一百七怛囉惹二合囉一百八囉引惹多塞葛二合囉引屹那踰三合捺哥一百九尾沙一百一十設塞怛囉三合一百一十一波哩謨引左哥一百一十二葛拏葛拏一百一十三吉尼吉尼一百一十四酤努酤努一百一十五左囉左囉一百一十六印捺哩二合野末羅謨引𮊯誐一百一十七左覩囉引哩野二合薩爹三鉢囉二合哥引設哥一百一十八怛摩怛摩一百一十九捺摩捺摩一百二十馱摩馱摩一百二十一薩摩薩摩一百二十二摩他摩他一百二十三薩摩薩摩一百二十四摩賀引怛謨引馱哥引囉尾達摩那一百二十五沙吒播二合引囉彌多引波哩布囉葛一百二十六彌梨彌梨一百二十七吒吒吒吒一百二十八陟陟陟陟一百二十九姹姹姹姹一百三十恥恥恥恥一百三十一伊尼引野左哩摩二合訖哩二合怛波哩葛囉一百三十二伊係曳二合引呬摩賀引哥引嚕尼哥一百三十三壹引說囉一百三十四摩賀引部多誐拏畔惹葛一百三十五酤嚕酤嚕一百三十六波囉波囉一百三十七葛囉葛囉一百三十八葛吒葛吒一百三十九摩吒摩吒一百四十尾戍馱尾沙野嚩引悉那一百四十一摩賀引哥引嚕尼哥一百四十二稅引怛野倪踰二合引波尾引怛一百四十三囉怛那二合摩酤吒摩引羅引馱囉一百四十四薩哩嚩二合倪也二合施囉悉訖哩二合怛一百四十五摩酤吒摩訶訥部二合引多一百四十六葛摩囉訖哩二合多葛囉多羅一百四十七𠆙切身引那薩摩引提尾謨引剎也二合引鉢囉二合紺必也二合一百四十八末呼薩埵散怛底波哩播引左葛一百四十九摩賀引哥引嚕尼哥一百五十薩哩嚩二合葛哩摩二合引嚩囉拏尾輸引達葛一百五十一薩哩嚩二合咩引提鉢囉二合謨引左葛一百五十二阿哥引羅沒哩二合怛踰二合鉢囉二合設摩那一百五十三薩哩嚩二合薩埵薩摩引說引薩葛囉一百五十四薩哩嚩二合引設引摩奴引囉他波哩布囉葛一百五十五那謨引窣覩二合底莎引賀引一百五十六大心陀羅尼曰。",
        "from": "T20n1099_001:0445c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿謨引伽引野莎引賀引一句小心陀羅尼曰。",
        "from": "T20n1099_001:0445c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿𡁠仁唧切下同多引野莎引賀引一句心中心陀羅尼曰。",
        "from": "T20n1099_001:0445c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩囉鉢囉二合捺引野莎引賀引一句器仗陀羅尼曰。",
        "from": "T20n1099_001:0445c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿波囉引𡁠多引野莎引賀引一句甲冑陀羅尼曰。",
        "from": "T20n1099_001:0445c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伊唐葛哩摩二合酤嚕那謨引窣覩二合底莎引賀引一句頭頂陀羅尼曰。",
        "from": "T20n1099_001:0445c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引吽引惹野莎引賀引一句髻陀羅尼曰。",
        "from": "T20n1099_001:0445c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引紇哩引一句塞怛賴三合路引吉也二合尾惹野引二阿謨引伽播引設引野三鉢囉二合底訶多紇哩二合引郝吽引發吒半音四世尊我此陀羅尼。",
        "from": "T20n1099_001:0445c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能成就一切事業。",
        "from": "T20n1099_001:0445c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常持誦者所作剋成。",
        "from": "T20n1099_001:0445c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人造五無間業。",
        "from": "T20n1099_001:0445c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人若能日三時中誦此陀羅尼。",
        "from": "T20n1099_001:0445c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸業障悉得清淨。",
        "from": "T20n1099_001:0445c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲作結界法者。",
        "from": "T20n1099_001:0445c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以此陀羅尼加持沈水香依法而用。",
        "from": "T20n1099_001:0445c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲禁止瘧病者。",
        "from": "T20n1099_001:0445c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持灰水。",
        "from": "T20n1099_001:0446a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或佉禰囉木作橛依法而用。",
        "from": "T20n1099_001:0446a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲息除一切病者。",
        "from": "T20n1099_001:0446a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持酥或油或水塗摩等用。",
        "from": "T20n1099_001:0446a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲禁止迦枯哩那鬼所持病者。",
        "from": "T20n1099_001:0446a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持刀依法而用。",
        "from": "T20n1099_001:0446a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲作諸擁護法者。",
        "from": "T20n1099_001:0446a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持線依法而用。",
        "from": "T20n1099_001:0446a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲止腹痛者。",
        "from": "T20n1099_001:0446a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持鹽水依法而飲。",
        "from": "T20n1099_001:0446a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲息除諸惡毒者。",
        "from": "T20n1099_001:0446a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持土或加持水依法而用。",
        "from": "T20n1099_001:0446a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲除去眼病者。",
        "from": "T20n1099_001:0446a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持白線隨繫其耳。",
        "from": "T20n1099_001:0446a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲除去齒痛者。",
        "from": "T20n1099_001:0446a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持迦囉尾囉木作齒木用。",
        "from": "T20n1099_001:0446a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲作結界法者。",
        "from": "T20n1099_001:0446a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取五色線加持二十一遍。",
        "from": "T20n1099_001:0446a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佉禰囉木作橛釘四方界。",
        "from": "T20n1099_001:0446a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然取其線絣量界分。",
        "from": "T20n1099_001:0446a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即結界成就。",
        "from": "T20n1099_001:0446a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲作擁護法者。",
        "from": "T20n1099_001:0446a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持水或塚間灰。",
        "from": "T20n1099_001:0446a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復淨線隨應當用。",
        "from": "T20n1099_001:0446a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲解諸執魅者。",
        "from": "T20n1099_001:0446a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持五色線依法而用。",
        "from": "T20n1099_001:0446a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲除諸瘧病者。",
        "from": "T20n1099_001:0446a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持白線依法而用。",
        "from": "T20n1099_001:0446a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲解除瘰癧及諸瘡腫者。",
        "from": "T20n1099_001:0446a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持蓽撥與蜜同和塗摩等用。",
        "from": "T20n1099_001:0446a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲除去眼病者。",
        "from": "T20n1099_001:0446a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持香水或甘草水。",
        "from": "T20n1099_001:0446a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或鉢羅舍葉浸水而用。",
        "from": "T20n1099_001:0446a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲息諸鬪戰諍訟者。",
        "from": "T20n1099_001:0446a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持淨水洗滌其面。",
        "from": "T20n1099_001:0446a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲擁護王之國境。",
        "from": "T20n1099_001:0446a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸侵撓得強勝者。",
        "from": "T20n1099_001:0446a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當擇妙好瓶器置潔淨處。",
        "from": "T20n1099_001:0446a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿盛其水設諸供養。",
        "from": "T20n1099_001:0446a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法者著鮮淨衣。",
        "from": "T20n1099_001:0446a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀此陀羅尼而為加持。",
        "from": "T20n1099_001:0446a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後取瓶中水隨處散灑。",
        "from": "T20n1099_001:0446a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得國界安隱災難不生。",
        "from": "T20n1099_001:0446a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人及傍生悉能衛護。",
        "from": "T20n1099_001:0446a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲解諸邪印者。",
        "from": "T20n1099_001:0446a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用栴檀香末加持二十一遍。",
        "from": "T20n1099_001:0446a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "點自心間即得解除。",
        "from": "T20n1099_001:0446a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲於自住舍作擁護者。",
        "from": "T20n1099_001:0446a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用蓮華作護摩法。",
        "from": "T20n1099_001:0446a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲調伏諸難調者。",
        "from": "T20n1099_001:0446a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用栴檀香作護摩法。",
        "from": "T20n1099_001:0446a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次成就法。",
        "from": "T20n1099_001:0446a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用勝香最勝香。",
        "from": "T20n1099_001:0446a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏手香帝手香。",
        "from": "T20n1099_001:0446a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩嚕尼香諾俱梨香。",
        "from": "T20n1099_001:0446a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那俱梨香畢利煬虞香。",
        "from": "T20n1099_001:0446a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多誐覽香等。",
        "from": "T20n1099_001:0446a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并月王藥妙喜樂。",
        "from": "T20n1099_001:0446a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪藥大輪藥。",
        "from": "T20n1099_001:0446b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尾瑟努訖蘭多藥。",
        "from": "T20n1099_001:0446b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸香藥取以和合而作一丸。",
        "from": "T20n1099_001:0446b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此陀羅尼加持一百八遍。",
        "from": "T20n1099_001:0446b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人為諸鬼神執魅怖畏。",
        "from": "T20n1099_001:0446b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或帶頂上或帶臂上即能衛護。",
        "from": "T20n1099_001:0446b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有女人將欲產生。",
        "from": "T20n1099_001:0446b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取前香藥碎為其末。",
        "from": "T20n1099_001:0446b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法加持同入水中。",
        "from": "T20n1099_001:0446b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用澡浴即得產生。",
        "from": "T20n1099_001:0446b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝福德子安隱無難。",
        "from": "T20n1099_001:0446b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸不祥事皆得銷滅。",
        "from": "T20n1099_001:0446b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復生已善作擁護。",
        "from": "T20n1099_001:0446b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸苦惱惡毒不生。",
        "from": "T20n1099_001:0446b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有所生速疾除遣。",
        "from": "T20n1099_001:0446b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若初生童子欲作擁護者。",
        "from": "T20n1099_001:0446b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取前香藥丸依法加持。",
        "from": "T20n1099_001:0446b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帶其頂上即能擁護。",
        "from": "T20n1099_001:0446b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲禁止風雲雷雹者。",
        "from": "T20n1099_001:0446b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取嚩嚕尼樹枝。",
        "from": "T20n1099_001:0446b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入淨水中依法加持已。",
        "from": "T20n1099_001:0446b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次執其枝而用散灑。",
        "from": "T20n1099_001:0446b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我此祕密心陀羅尼。",
        "from": "T20n1099_001:0446b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能作最上成就。",
        "from": "T20n1099_001:0446b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所說一切法用悉無不成。",
        "from": "T20n1099_001:0446b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使持誦未精熟者亦得成就。",
        "from": "T20n1099_001:0446b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次宣說本尊成就法。",
        "from": "T20n1099_001:0446b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲見我身求成就者。",
        "from": "T20n1099_001:0446b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於白月十五日依法作㡧。",
        "from": "T20n1099_001:0446b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上好不雜彩色畫我形像。",
        "from": "T20n1099_001:0446b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大自在天相。",
        "from": "T20n1099_001:0446b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴寶冠鹿皮為絡腋。",
        "from": "T20n1099_001:0446b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切珍寶而為莊嚴。",
        "from": "T20n1099_001:0446b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是畫已依法安布。",
        "from": "T20n1099_001:0446b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當於彼㡧像前。",
        "from": "T20n1099_001:0446b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿摩夷作曼拏羅。",
        "from": "T20n1099_001:0446b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散諸妙華以八種香安置供養。",
        "from": "T20n1099_001:0446b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復排設六十四種出生飲食。",
        "from": "T20n1099_001:0446b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所用清淨離諸血肉腥雜穢污。",
        "from": "T20n1099_001:0446b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒沈水香。",
        "from": "T20n1099_001:0446b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人應當晝夜不食。",
        "from": "T20n1099_001:0446b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日三時澡沐身體著新淨衣。",
        "from": "T20n1099_001:0446b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦心專注獻供養已。",
        "from": "T20n1099_001:0446b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於㡧像前念此陀羅尼一千八十遍。",
        "from": "T20n1099_001:0446b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後諦想本尊儀相。",
        "from": "T20n1099_001:0446b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃見自身有大熾焰。",
        "from": "T20n1099_001:0446b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人見已心生歡喜。",
        "from": "T20n1099_001:0446b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾即見我身來現其前。",
        "from": "T20n1099_001:0446b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施諸所求悉令圓滿。",
        "from": "T20n1099_001:0446b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人爾時當用雌黃。",
        "from": "T20n1099_001:0446b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或安膳那藥而用點眼。",
        "from": "T20n1099_001:0446b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能隱身亦得騰空。",
        "from": "T20n1099_001:0446b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在證入不空智莊嚴三摩地門。",
        "from": "T20n1099_001:0446c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨諸所欲一切所作皆得圓滿。",
        "from": "T20n1099_001:0446c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此經已。",
        "from": "T20n1099_001:0446c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖觀自在菩薩摩訶薩。",
        "from": "T20n1099_001:0446c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘自在大自在等梵天眾。",
        "from": "T20n1099_001:0446c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及淨光天子并諸菩薩聲聞一切大會。",
        "from": "T20n1099_001:0446c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T20n1099_001:0446c06_1",
        "context_with_next_sentence": true
    },
    {
