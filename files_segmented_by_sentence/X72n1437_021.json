{
    "X72n1437_021:0502c03_0": "永覺和尚廣錄卷第二十一",
    "X72n1437_021:0502c05_0": "嗣法弟子　道霈　重編",
    "X72n1437_021:0502c06_0": "諸贊",
    "X72n1437_021:0502c07_0": "彌陀佛贊",
    "X72n1437_021:0502c08_0": "祇是這箇。",
    "X72n1437_021:0502c08_1": "喚作彌陀。",
    "X72n1437_021:0502c08_2": "若是那箇。",
    "X72n1437_021:0502c08_3": "喚作甚麼。",
    "X72n1437_021:0502c08_4": "駕空華之寶筏。",
    "X72n1437_021:0502c09_5": "接幻住之娑婆。",
    "X72n1437_021:0502c09_6": "示淨示穢。",
    "X72n1437_021:0502c09_7": "一塲懡[怡台+羅]。",
    "X72n1437_021:0502c09_8": "舍穢趨淨。",
    "X72n1437_021:0502c10_0": "夢踰大河。",
    "X72n1437_021:0502c10_1": "若遇鐵額銅睛漢。",
    "X72n1437_021:0502c10_2": "一定從他不順他。",
    "X72n1437_021:0502c10_3": "且道。",
    "X72n1437_021:0502c11_0": "是往生不是往生。",
    "X72n1437_021:0502c11_1": "噫。",
    "X72n1437_021:0502c11_2": "東村王大無思算。",
    "X72n1437_021:0502c11_3": "倒騎石馬過新羅。",
    "X72n1437_021:0502c13_0": "釋迦佛贊",
    "X72n1437_021:0502c14_0": "三世一切薄伽梵。",
    "X72n1437_021:0502c14_1": "唯我釋尊最希有。",
    "X72n1437_021:0502c14_2": "降生偏向難忍邦。",
    "X72n1437_021:0502c15_3": "五濁借作歸元路。",
    "X72n1437_021:0502c15_4": "降生皇宮處極尊。",
    "X72n1437_021:0502c15_5": "飄然棄去如敝屣。",
    "X72n1437_021:0502c16_6": "示知本有天然貴。",
    "X72n1437_021:0502c16_7": "區區凡榮豈能等。",
    "X72n1437_021:0502c16_8": "納妻誕子同人法。",
    "X72n1437_021:0502c17_9": "一旦割去如斬絲。",
    "X72n1437_021:0502c17_10": "示知情愛為大患。",
    "X72n1437_021:0502c17_11": "復性初關首斷之。",
    "X72n1437_021:0502c18_12": "徧遊外道親穿過。",
    "X72n1437_021:0502c18_13": "知非便捨明且決。",
    "X72n1437_021:0502c18_14": "示知彼法非究竟。",
    "X72n1437_021:0502c19_15": "歷劫煉行盡唐捐。",
    "X72n1437_021:0502c19_16": "雪山六載嘴盧都。",
    "X72n1437_021:0502c19_17": "雪覆千峰不暇看。",
    "X72n1437_021:0502c20_18": "示知研道貴精勤。",
    "X72n1437_021:0502c20_19": "情根見刺俱斷絕。",
    "X72n1437_021:0502c21_0": "一覩明星云大悟。",
    "X72n1437_021:0502c21_1": "大驚小恠稱成佛。",
    "X72n1437_021:0502c21_2": "示知成佛有正因。",
    "X72n1437_021:0502c22_3": "不從心外強修證。",
    "X72n1437_021:0502c22_4": "菩提場中暢本懷。",
    "X72n1437_021:0502c22_5": "却如旭日照高山。",
    "X72n1437_021:0502c23_6": "俯就羣機啟方便。",
    "X72n1437_021:0502c23_7": "權隱珍袍著敝衣。",
    "X72n1437_021:0502c23_8": "鹿野初轉四諦輪。",
    "X72n1437_021:0502c24_9": "陳如接拍便成令。",
    "X72n1437_021:0502c24_10": "從茲三寶住世間。",
    "X72n1437_021:0502c24_11": "光明熾盛照一切。",
    "X72n1437_021:0503a01_12": "說漸說頓仍說圓。",
    "X72n1437_021:0503a01_13": "應機雨化度無極。",
    "X72n1437_021:0503a01_14": "不論三草及二木。",
    "X72n1437_021:0503a02_15": "觸著一一皆暢茂。",
    "X72n1437_021:0503a02_16": "金河法浪流不窮。",
    "X72n1437_021:0503a02_17": "至今餘潤猶瀝瀝。",
    "X72n1437_021:0503a03_18": "纔沾一滴徹根源。",
    "X72n1437_021:0503a03_19": "光吞十虗誰敢匹。",
    "X72n1437_021:0503a04_0": "佛功德海如沙界。",
    "X72n1437_021:0503a04_1": "我贊一塵尚如是。",
    "X72n1437_021:0503a04_2": "塵塵功德廣難量。",
    "X72n1437_021:0503a05_3": "我有舌根不能及。",
    "X72n1437_021:0503a05_4": "即使法界諸大覺。",
    "X72n1437_021:0503a05_5": "慇懃各出廣長舌。",
    "X72n1437_021:0503a06_6": "說偈直滿百千歲。",
    "X72n1437_021:0503a06_7": "贊我釋尊亦難罄。",
    "X72n1437_021:0503a06_8": "痛思我與釋迦等。",
    "X72n1437_021:0503a07_9": "無量劫來無有二。",
    "X72n1437_021:0503a07_10": "渠遊濁土若蓮華。",
    "X72n1437_021:0503a07_11": "我陷泥塗不能出。",
    "X72n1437_021:0503a08_12": "纖毫未曾有減增。",
    "X72n1437_021:0503a08_13": "祇從迷悟分凡聖。",
    "X72n1437_021:0503a08_14": "迷則心反成外物。",
    "X72n1437_021:0503a09_15": "濁浪拍天不可渡。",
    "X72n1437_021:0503a09_16": "悟則外物盡唯心。",
    "X72n1437_021:0503a09_17": "渾圓炤耀光明聚。",
    "X72n1437_021:0503a10_18": "到底迷悟不相干。",
    "X72n1437_021:0503a10_19": "淨穢兩途俱坐斷。",
    "X72n1437_021:0503a11_0": "法身笑破等枯樁。",
    "X72n1437_021:0503a11_1": "向上有句如何說。",
    "X72n1437_021:0503a11_2": "我今稽首問釋尊。",
    "X72n1437_021:0503a12_3": "釋尊垂眸復閉舌。",
    "X72n1437_021:0503a12_4": "但願身心奉塵剎。",
    "X72n1437_021:0503a12_5": "普使眾生悉成佛。",
    "X72n1437_021:0503a14_0": "出山像贊",
    "X72n1437_021:0503a15_0": "空山峭絕。",
    "X72n1437_021:0503a15_1": "凍雲未開。",
    "X72n1437_021:0503a15_2": "形類枯木。",
    "X72n1437_021:0503a15_3": "舌長深苔。",
    "X72n1437_021:0503a15_4": "堆堆兀坐。",
    "X72n1437_021:0503a16_0": "任世疑猜。",
    "X72n1437_021:0503a16_1": "明星夜覩。",
    "X72n1437_021:0503a16_2": "不勝自咍。",
    "X72n1437_021:0503a16_3": "忍俊不禁。",
    "X72n1437_021:0503a16_4": "再嘆奇哉。",
    "X72n1437_021:0503a17_0": "三思大事。",
    "X72n1437_021:0503a17_1": "却出山來。",
    "X72n1437_021:0503a17_2": "咄。",
    "X72n1437_021:0503a17_3": "四十九年阿漉漉。",
    "X72n1437_021:0503a17_4": "至今滿面是塵埃。",
    "X72n1437_021:0503a19_0": "觀音大士贊(二首)",
    "X72n1437_021:0503a20_0": "以眼觀音。",
    "X72n1437_021:0503a20_1": "聞性自空。",
    "X72n1437_021:0503a20_2": "以音遇眼。",
    "X72n1437_021:0503a20_3": "音性自泯。",
    "X72n1437_021:0503a20_4": "音聞兩寂。",
    "X72n1437_021:0503a21_0": "唯是一心。",
    "X72n1437_021:0503a21_1": "孤光迥脫。",
    "X72n1437_021:0503a21_2": "不廢音聞。",
    "X72n1437_021:0503a21_3": "二俱徧滿。",
    "X72n1437_021:0503a21_4": "罔不圓通。",
    "X72n1437_021:0503a22_0": "一根如是。",
    "X72n1437_021:0503a22_1": "諸根亦然。",
    "X72n1437_021:0503a22_2": "交炤互用。",
    "X72n1437_021:0503a22_3": "靈妙難思。",
    "X72n1437_021:0503a22_4": "八萬四千。",
    "X72n1437_021:0503a23_0": "手眼竝彰。",
    "X72n1437_021:0503a23_1": "故稱大悲。",
    "X72n1437_021:0503a23_2": "其德無量。",
    "X72n1437_021:0503a23_3": "應此方機。",
    "X72n1437_021:0503a23_4": "斯為第一。",
    "X72n1437_021:0503a24_0": "妙觀之力。",
    "X72n1437_021:0503a24_1": "是菩薩師。",
    "X72n1437_021:0503a24_2": "供養弟子。",
    "X72n1437_021:0503a24_3": "盍省其師。",
    "X72n1437_021:0503a24_4": "若得其師。",
    "X72n1437_021:0503b01_0": "是真供養。",
    "X72n1437_021:0503b02_0": "不是金沙灘頭婦。",
    "X72n1437_021:0503b02_1": "亦非普陀巖畔客。",
    "X72n1437_021:0503b02_2": "老僧見他鼻半邊。",
    "X72n1437_021:0503b03_3": "祇是箇十界無家底老賊。",
    "X72n1437_021:0503b04_0": "三大士贊",
    "X72n1437_021:0503b05_0": "三老相逢說甚麼。",
    "X72n1437_021:0503b05_1": "證南作北奈渠何。",
    "X72n1437_021:0503b05_2": "扶同附會任唇舌。",
    "X72n1437_021:0503b06_3": "總是一場嗹哩囉。",
    "X72n1437_021:0503b06_4": "直至于今毒未息。",
    "X72n1437_021:0503b06_5": "看來一字也成多。",
    "X72n1437_021:0503b07_6": "請君體取未生句。",
    "X72n1437_021:0503b07_7": "莫管無風水上波。",
    "X72n1437_021:0503b08_0": "文殊大士贊",
    "X72n1437_021:0503b09_0": "稽首大士。",
    "X72n1437_021:0503b09_1": "為佛長子。",
    "X72n1437_021:0503b09_2": "智光普炤。",
    "X72n1437_021:0503b09_3": "實諸佛母。",
    "X72n1437_021:0503b09_4": "影現娑婆。",
    "X72n1437_021:0503b10_0": "釋尊良輔。",
    "X72n1437_021:0503b10_1": "坐師子座。",
    "X72n1437_021:0503b10_2": "震塗毒鼓。",
    "X72n1437_021:0503b11_0": "布袋和尚贊(二首)",
    "X72n1437_021:0503b12_0": "我不重你。",
    "X72n1437_021:0503b12_1": "臉笑嘻嘻。",
    "X72n1437_021:0503b12_2": "我不重你腹大便便。",
    "X72n1437_021:0503b12_3": "我不重你身量腇腲。",
    "X72n1437_021:0503b13_4": "我不重你胸次廓然。",
    "X72n1437_021:0503b13_5": "我祇重你負著布袋不知年。",
    "X72n1437_021:0503b14_6": "到處逢人乞一錢。",
    "X72n1437_021:0503b14_7": "癡癡不捨無時了。",
    "X72n1437_021:0503b14_8": "婬坊酒肆亦留連。",
    "X72n1437_021:0503b15_9": "婆心果是如天濶。",
    "X72n1437_021:0503b15_10": "收歸布袋沒中邊。",
    "X72n1437_021:0503b15_11": "雖然如是。",
    "X72n1437_021:0503b16_12": "若渠放下布袋。",
    "X72n1437_021:0503b16_13": "又作麼生贊嘆。",
    "X72n1437_021:0503b16_14": "也祇得稽首南無慈氏尊前。",
    "X72n1437_021:0503b18_0": "大了肚寬了腸。",
    "X72n1437_021:0503b18_1": "看來無界不收藏。",
    "X72n1437_021:0503b18_2": "未知此願何時滿。",
    "X72n1437_021:0503b19_0": "祇好呵呵笑一場。",
    "X72n1437_021:0503b20_0": "寒山拾得贊",
    "X72n1437_021:0503b21_0": "敝衣垢面。",
    "X72n1437_021:0503b21_1": "蓬髮婆娑。",
    "X72n1437_021:0503b21_2": "持帚回顧。",
    "X72n1437_021:0503b21_3": "為箇甚麼。",
    "X72n1437_021:0503b21_4": "為彼世人。",
    "X72n1437_021:0503b22_0": "癡蠢者多。",
    "X72n1437_021:0503b22_1": "強執空影。",
    "X72n1437_021:0503b22_2": "為禍之囮。",
    "X72n1437_021:0503b22_3": "直須掃破。",
    "X72n1437_021:0503b22_4": "免彼蹉跎。",
    "X72n1437_021:0503b23_0": "長言不足。",
    "X72n1437_021:0503b23_1": "繼以悲歌。",
    "X72n1437_021:0503b23_2": "悲歌不薦。",
    "X72n1437_021:0503b23_3": "無可奈何。",
    "X72n1437_021:0503b23_4": "悲轉為笑。",
    "X72n1437_021:0503b24_0": "拍手呵呵。",
    "X72n1437_021:0503b24_1": "笑彼逐逐。",
    "X72n1437_021:0503b24_2": "如自燒蛾。",
    "X72n1437_021:0503b24_3": "噫。",
    "X72n1437_021:0503b24_4": "國清門外溪山古。",
    "X72n1437_021:0503c01_0": "至今明月挂松蘿。",
    "X72n1437_021:0503c02_0": "空生尊者贊",
    "X72n1437_021:0503c03_0": "既名空生。",
    "X72n1437_021:0503c03_1": "云何有相。",
    "X72n1437_021:0503c03_2": "相耶空耶。",
    "X72n1437_021:0503c03_3": "為一為兩。",
    "X72n1437_021:0503c03_4": "碎諸有關。",
    "X72n1437_021:0503c04_0": "破如來藏。",
    "X72n1437_021:0503c04_1": "不管巖前雨華。",
    "X72n1437_021:0503c04_2": "且把手中拄杖。",
    "X72n1437_021:0503c04_3": "雖云是東方青龍陀。",
    "X72n1437_021:0503c05_4": "也祇是這般模樣。",
    "X72n1437_021:0503c06_0": "十八羅漢贊。",
    "X72n1437_021:0503c06_1": "為金仙庵題竪指若為指佛。",
    "X72n1437_021:0503c08_2": "何者是佛。",
    "X72n1437_021:0503c08_3": "若為指心。",
    "X72n1437_021:0503c08_4": "何者非心。",
    "X72n1437_021:0503c08_5": "一指分明太漏逗。",
    "X72n1437_021:0503c09_6": "千年祇作野狐精。",
    "X72n1437_021:0503c09_7": "還有為尊者出氣的麼。",
    "X72n1437_021:0503c09_8": "唐時却有老俱胝。",
    "X72n1437_021:0503c11_0": "執卷",
    "X72n1437_021:0503c12_0": "祇這手卷。",
    "X72n1437_021:0503c12_1": "親從佛得。",
    "X72n1437_021:0503c12_2": "文彩已彰。",
    "X72n1437_021:0503c12_3": "炭中露墨。",
    "X72n1437_021:0503c12_4": "咄。",
    "X72n1437_021:0503c12_5": "好向堂前把火焚。",
    "X72n1437_021:0503c13_6": "免使人見贓捉賊。",
    "X72n1437_021:0503c14_0": "扶杖",
    "X72n1437_021:0503c15_0": "一條拄杖子。",
    "X72n1437_021:0503c15_1": "照用不容分。",
    "X72n1437_021:0503c15_2": "扶過斷橋水。",
    "X72n1437_021:0503c15_3": "伴歸無月村。",
    "X72n1437_021:0503c16_0": "到不如放下著。",
    "X72n1437_021:0503c16_1": "何以故。",
    "X72n1437_021:0503c16_2": "正眼看來。",
    "X72n1437_021:0503c16_3": "不值半分文。",
    "X72n1437_021:0503c17_0": "撥眉",
    "X72n1437_021:0503c18_0": "撥開長眉。",
    "X72n1437_021:0503c18_1": "分明覿面。",
    "X72n1437_021:0503c18_2": "怎奈迷何。",
    "X72n1437_021:0503c18_3": "依然不見。",
    "X72n1437_021:0503c18_4": "見不見。",
    "X72n1437_021:0503c18_5": "休向空中尋閃電。",
    "X72n1437_021:0503c20_0": "入定",
    "X72n1437_021:0503c21_0": "寂不聞聲。",
    "X72n1437_021:0503c21_1": "天華亂墜。",
    "X72n1437_021:0503c21_2": "最先見佛。",
    "X72n1437_021:0503c21_3": "熱瞞一會。",
    "X72n1437_021:0503c21_4": "似此等惡模惡樣。",
    "X72n1437_021:0503c22_5": "祇好貶向人天。",
    "X72n1437_021:0503c22_6": "永作福田之類。",
    "X72n1437_021:0503c23_0": "合掌",
    "X72n1437_021:0503c24_0": "合掌當胸。",
    "X72n1437_021:0503c24_1": "歸依那箇。",
    "X72n1437_021:0503c24_2": "若言見佛。",
    "X72n1437_021:0503c24_3": "分明話墮。",
    "X72n1437_021:0503c24_4": "縱言不見。",
    "X72n1437_021:0504a01_0": "未免有過。",
    "X72n1437_021:0504a01_1": "噫。",
    "X72n1437_021:0504a01_2": "看來合掌當胸。",
    "X72n1437_021:0504a01_3": "真不如撒手長臥。",
    "X72n1437_021:0504a02_0": "擊磬",
    "X72n1437_021:0504a03_0": "擊磬一聲。",
    "X72n1437_021:0504a03_1": "大地平沉。",
    "X72n1437_021:0504a03_2": "虗空髓露。",
    "X72n1437_021:0504a03_3": "枯木龍吟。",
    "X72n1437_021:0504a03_4": "若到山僧門下。",
    "X72n1437_021:0504a04_5": "大有事在。",
    "X72n1437_021:0504a04_6": "為渠祇見其影。",
    "X72n1437_021:0504a04_7": "不見其形。",
    "X72n1437_021:0504a05_0": "洗耳",
    "X72n1437_021:0504a06_0": "洗耳去塵。",
    "X72n1437_021:0504a06_1": "還成自汙。",
    "X72n1437_021:0504a06_2": "雖是圓通。",
    "X72n1437_021:0504a06_3": "七錯八悞。",
    "X72n1437_021:0504a06_4": "正好當胸打一拳。",
    "X72n1437_021:0504a07_5": "那管你靈山親囑付。",
    "X72n1437_021:0504a08_0": "降龍",
    "X72n1437_021:0504a09_0": "娑竭出海。",
    "X72n1437_021:0504a09_1": "神變叵測。",
    "X72n1437_021:0504a09_2": "似鶻提鳩。",
    "X72n1437_021:0504a09_3": "未為奇特。",
    "X72n1437_021:0504a09_4": "既是似鶻提鳩。",
    "X72n1437_021:0504a10_5": "何以未為奇特。",
    "X72n1437_021:0504a10_6": "請問唐時白拈賊。",
    "X72n1437_021:0504a11_0": "伏虎",
    "X72n1437_021:0504a12_0": "獰虎失威。",
    "X72n1437_021:0504a12_1": "怗然馴伏。",
    "X72n1437_021:0504a12_2": "要騎便騎。",
    "X72n1437_021:0504a12_3": "却如跨犢。",
    "X72n1437_021:0504a12_4": "若是本分衲僧。",
    "X72n1437_021:0504a13_5": "安用這箇業畜。",
    "X72n1437_021:0504a13_6": "豈不見道。",
    "X72n1437_021:0504a13_7": "巴歌不是陽春曲。",
    "X72n1437_021:0504a14_0": "憑几",
    "X72n1437_021:0504a15_0": "試問尊者。",
    "X72n1437_021:0504a15_1": "還有憑依也無。",
    "X72n1437_021:0504a15_2": "若有憑依。",
    "X72n1437_021:0504a15_3": "何須這箇。",
    "X72n1437_021:0504a15_4": "若無憑依。",
    "X72n1437_021:0504a16_5": "安用這箇。",
    "X72n1437_021:0504a16_6": "所以衲僧據令。",
    "X72n1437_021:0504a16_7": "不免一拳打破。",
    "X72n1437_021:0504a16_8": "雖然。",
    "X72n1437_021:0504a17_0": "佛事門中聻。",
    "X72n1437_021:0504a18_0": "抱膝",
    "X72n1437_021:0504a19_0": "昔也曲膝而請。",
    "X72n1437_021:0504a19_1": "今也抱膝而坐。",
    "X72n1437_021:0504a19_2": "長年無事商量。",
    "X72n1437_021:0504a19_3": "却似習成怠隋。",
    "X72n1437_021:0504a20_4": "休怠隋。",
    "X72n1437_021:0504a20_5": "一自靈山分付後。",
    "X72n1437_021:0504a20_6": "不會打發得這些滯貨。",
    "X72n1437_021:0504a22_0": "補衲",
    "X72n1437_021:0504a23_0": "瞿曇舊衲衣。",
    "X72n1437_021:0504a23_1": "片片裁雲補。",
    "X72n1437_021:0504a23_2": "持來重七斤。",
    "X72n1437_021:0504a23_3": "包著細腰鼓。",
    "X72n1437_021:0504a24_0": "還有要識老瞿曇者麼。",
    "X72n1437_021:0504a24_1": "祗這是。",
    "X72n1437_021:0504b01_0": "看經",
    "X72n1437_021:0504b02_0": "祇這一卷經。",
    "X72n1437_021:0504b02_1": "從來不許轉。",
    "X72n1437_021:0504b02_2": "晝夜鑽紙窓。",
    "X72n1437_021:0504b02_3": "太近翻成遠。",
    "X72n1437_021:0504b03_0": "畢竟要轉這一卷麼。",
    "X72n1437_021:0504b03_1": "腦後一眼開。",
    "X72n1437_021:0504b03_2": "大地秋雲捲。",
    "X72n1437_021:0504b04_0": "弄獅",
    "X72n1437_021:0504b05_0": "汝弄獅子。",
    "X72n1437_021:0504b05_1": "弄得幾出。",
    "X72n1437_021:0504b05_2": "六即是一。",
    "X72n1437_021:0504b05_3": "一即是六。",
    "X72n1437_021:0504b05_4": "好手還渠老作家。",
    "X72n1437_021:0504b06_5": "白雲深隱禪那窟。",
    "X72n1437_021:0504b07_0": "寫經",
    "X72n1437_021:0504b08_0": "須彌為筆。",
    "X72n1437_021:0504b08_1": "大海為墨。",
    "X72n1437_021:0504b08_2": "寫這一卷經。",
    "X72n1437_021:0504b08_3": "虗空都逼塞。",
    "X72n1437_021:0504b08_4": "還寫得出麼。",
    "X72n1437_021:0504b09_5": "雖然。",
    "X72n1437_021:0504b09_6": "今日筆尖上。",
    "X72n1437_021:0504b09_7": "放光動地。",
    "X72n1437_021:0504b09_8": "見者乃仙陀之客。",
    "X72n1437_021:0504b11_0": "負袋",
    "X72n1437_021:0504b12_0": "寬了肚皮。",
    "X72n1437_021:0504b12_1": "打開布袋。",
    "X72n1437_021:0504b12_2": "逢人乞一文。",
    "X72n1437_021:0504b12_3": "償却前生債。",
    "X72n1437_021:0504b12_4": "酒肆與婬坊。",
    "X72n1437_021:0504b13_5": "到處俱無礙。",
    "X72n1437_021:0504b13_6": "呵呵。",
    "X72n1437_021:0504b13_7": "十字街頭。",
    "X72n1437_021:0504b13_8": "一場破敗。",
    "X72n1437_021:0504b14_0": "托塔",
    "X72n1437_021:0504b15_0": "寶塔從西來。",
    "X72n1437_021:0504b15_1": "驚天復動地。",
    "X72n1437_021:0504b15_2": "光恠百千秋。",
    "X72n1437_021:0504b15_3": "見者難擬議。",
    "X72n1437_021:0504b16_0": "休擬議。",
    "X72n1437_021:0504b16_1": "恐不是阿育王的舍利。",
    "X72n1437_021:0504b17_0": "達摩贊(三首)",
    "X72n1437_021:0504b18_0": "西來老胡。",
    "X72n1437_021:0504b18_1": "甚是糊塗。",
    "X72n1437_021:0504b18_2": "梁武問著第一義。",
    "X72n1437_021:0504b18_3": "大膽說出廓然無。",
    "X72n1437_021:0504b19_4": "再云不識似銀山。",
    "X72n1437_021:0504b19_5": "闔國蹉過空躇蹰。",
    "X72n1437_021:0504b19_6": "祇得暗向長江渡。",
    "X72n1437_021:0504b20_7": "九年面壁嘴盧都。",
    "X72n1437_021:0504b20_8": "一堆滯貨誰承買。",
    "X72n1437_021:0504b20_9": "雪夜安心髓亦枯。",
    "X72n1437_021:0504b21_10": "看來西天未發足時。",
    "X72n1437_021:0504b21_11": "也好與三十棒。",
    "X72n1437_021:0504b21_12": "何以故。",
    "X72n1437_021:0504b22_13": "為渠起樣作模。",
    "X72n1437_021:0504b23_0": "一蘆渡江。",
    "X72n1437_021:0504b23_1": "九年面壁。",
    "X72n1437_021:0504b23_2": "擬議不來。",
    "X72n1437_021:0504b23_3": "千聖莫識。",
    "X72n1437_021:0504b23_4": "流毒震旦。",
    "X72n1437_021:0504b24_0": "至今未息。",
    "X72n1437_021:0504b24_1": "有甚好處。",
    "X72n1437_021:0504b24_2": "破鞋一隻。",
    "X72n1437_021:0504c01_0": "堆堆面壁。",
    "X72n1437_021:0504c01_1": "說箇甚麼。",
    "X72n1437_021:0504c01_2": "三拜得髓。",
    "X72n1437_021:0504c01_3": "一場懡[怡台+羅]。",
    "X72n1437_021:0504c01_4": "傳虗接響至今日。",
    "X72n1437_021:0504c02_5": "却似重添水上波。",
    "X72n1437_021:0504c03_0": "三教圖贊",
    "X72n1437_021:0504c04_0": "三老出來。",
    "X72n1437_021:0504c04_1": "氷片霰雪。",
    "X72n1437_021:0504c04_2": "割裂虗空。",
    "X72n1437_021:0504c04_3": "掉三寸舌。",
    "X72n1437_021:0504c04_4": "成得何事。",
    "X72n1437_021:0504c05_0": "證龜作鼈。",
    "X72n1437_021:0504c05_1": "一朝聚首。",
    "X72n1437_021:0504c05_2": "更有何說。",
    "X72n1437_021:0504c06_0": "達觀大師贊",
    "X72n1437_021:0504c07_0": "其骨若鋼。",
    "X72n1437_021:0504c07_1": "其氣如虹。",
    "X72n1437_021:0504c07_2": "肩荷大法。",
    "X72n1437_021:0504c07_3": "力振頺風。",
    "X72n1437_021:0504c07_4": "如護君父。",
    "X72n1437_021:0504c08_0": "豈顧厥躬。",
    "X72n1437_021:0504c08_1": "雖罹其難。",
    "X72n1437_021:0504c08_2": "法門之忠。",
    "X72n1437_021:0504c09_0": "雲棲大師贊",
    "X72n1437_021:0504c10_0": "末風浮薄。",
    "X72n1437_021:0504c10_1": "法綱久隤。",
    "X72n1437_021:0504c10_2": "賴師振之。",
    "X72n1437_021:0504c10_3": "狂瀾頓回。",
    "X72n1437_021:0504c10_4": "專一心而歸淨國。",
    "X72n1437_021:0504c11_5": "弘萬行以布深慈。",
    "X72n1437_021:0504c11_6": "是知。",
    "X72n1437_021:0504c11_7": "師固當世之柱石。",
    "X72n1437_021:0504c11_8": "亦萬世之繩規。",
    "X72n1437_021:0504c13_0": "雲棲壽昌真寂三大師贊",
    "X72n1437_021:0504c14_0": "三師竝出。",
    "X72n1437_021:0504c14_1": "日照昏衢。",
    "X72n1437_021:0504c14_2": "或禪或教。",
    "X72n1437_021:0504c14_3": "異路同趨。",
    "X72n1437_021:0504c14_4": "承前啟後。",
    "X72n1437_021:0504c15_0": "作眾良模。",
    "X72n1437_021:0504c15_1": "吾雖不敏。",
    "X72n1437_021:0504c15_2": "願學之而未能者乎。",
    "X72n1437_021:0504c16_0": "壽昌和尚贊(二首)",
    "X72n1437_021:0504c17_0": "一旦推翻大好山。",
    "X72n1437_021:0504c17_1": "等閑跳出祖師關。",
    "X72n1437_021:0504c17_2": "耕雨鋤雲五十載。",
    "X72n1437_021:0504c18_3": "何曾有意入塵寰。",
    "X72n1437_021:0504c18_4": "銕骨凌空難比擬。",
    "X72n1437_021:0504c18_5": "鳥道無人獨往還。",
    "X72n1437_021:0504c19_6": "一條拄杖如龍活。",
    "X72n1437_021:0504c19_7": "至今洞口自潺湲。",
    "X72n1437_021:0504c20_0": "這老和尚。",
    "X72n1437_021:0504c20_1": "全沒巴鼻。",
    "X72n1437_021:0504c20_2": "指東話西。",
    "X72n1437_021:0504c20_3": "實無道理。",
    "X72n1437_021:0504c20_4": "惱亂眾生。",
    "X72n1437_021:0504c21_0": "無風浪起。",
    "X72n1437_021:0504c21_1": "建二十餘剎。",
    "X72n1437_021:0504c21_2": "使鬼驅風。",
    "X72n1437_021:0504c21_3": "歷五十餘年。",
    "X72n1437_021:0504c21_4": "填坑穵地。",
    "X72n1437_021:0504c22_5": "臨了一場逗漏。",
    "X72n1437_021:0504c22_6": "却云今日分明指示。",
    "X72n1437_021:0504c22_7": "莫是從大好山過麼。",
    "X72n1437_021:0504c23_8": "咄。",
    "X72n1437_021:0504c23_9": "切莫向此中擬議。",
    "X72n1437_021:0504c24_0": "博山和尚贊",
    "X72n1437_021:0505a01_0": "從玉山絕却路頭。",
    "X72n1437_021:0505a01_1": "向峨峰安下鼻孔。",
    "X72n1437_021:0505a01_2": "錦繡囊中飄異香。",
    "X72n1437_021:0505a02_3": "虗空面上鑽窟竉。",
    "X72n1437_021:0505a02_4": "牢把鐵關不暫開。",
    "X72n1437_021:0505a02_5": "末後誰能繼其踵。",
    "X72n1437_021:0505a04_0": "滕秀實居士贊(二首)",
    "X72n1437_021:0505a05_0": "秀而華。",
    "X72n1437_021:0505a05_1": "秀而實。",
    "X72n1437_021:0505a05_2": "雖是一場好夢。",
    "X72n1437_021:0505a05_3": "醒後何須更覓。",
    "X72n1437_021:0505a05_4": "學道八載。",
    "X72n1437_021:0505a06_5": "遽爾趨寂。",
    "X72n1437_021:0505a06_6": "可喜者問道之念方勤。",
    "X72n1437_021:0505a06_7": "可惜者履道之功未畢。",
    "X72n1437_021:0505a07_8": "雖然。",
    "X72n1437_021:0505a07_9": "末後一曲讓君長。",
    "X72n1437_021:0505a07_10": "趺坐西逝明歷歷。",
    "X72n1437_021:0505a08_0": "老鶴踏翻松頂巢。",
    "X72n1437_021:0505a08_1": "帶月飛歸人未識。",
    "X72n1437_021:0505a09_0": "閻浮一夢誰先覺。",
    "X72n1437_021:0505a09_1": "五欲重重自成縛。",
    "X72n1437_021:0505a09_2": "先生腰纏十萬貫。",
    "X72n1437_021:0505a10_3": "更曾跨箇楊州鶴。",
    "X72n1437_021:0505a10_4": "臨終拍手唱歸來。",
    "X72n1437_021:0505a10_5": "獅子迸斷黃金索。",
    "X72n1437_021:0505a11_6": "好似昔年馮濟川。",
    "X72n1437_021:0505a11_7": "不免將錯去就錯。",
    "X72n1437_021:0505a11_8": "穩坐蓮華大若輪。",
    "X72n1437_021:0505a12_9": "五色寶光相映爍。",
    "X72n1437_021:0505a12_10": "天衣飄緲絢雲霓。",
    "X72n1437_021:0505a12_11": "琉璃地上聞天樂。",
    "X72n1437_021:0505a13_12": "世間多少競英雄。",
    "X72n1437_021:0505a13_13": "看來輸君最後著。",
    "X72n1437_021:0505a13_14": "尚留這箇在娑婆。",
    "X72n1437_021:0505a14_15": "惡水當頭潑一杓。",
    "X72n1437_021:0505a15_0": "兵憲林得山居士贊",
    "X72n1437_021:0505a16_0": "君性多豪爽。",
    "X72n1437_021:0505a16_1": "磊落稱奇英。",
    "X72n1437_021:0505a16_2": "心胸洞無物。",
    "X72n1437_021:0505a16_3": "肝膽向人傾。",
    "X72n1437_021:0505a17_0": "憂時獨上批鱗疏。",
    "X72n1437_021:0505a17_1": "壯心直欲靖胡塵。",
    "X72n1437_021:0505a17_2": "轉輸軍餉三邊足。",
    "X72n1437_021:0505a18_3": "抗守危城萬虜驚。",
    "X72n1437_021:0505a18_4": "北門鎖鑰君堪寄。",
    "X72n1437_021:0505a18_5": "遭讒拂袖東海潯。",
    "X72n1437_021:0505a19_6": "屢約披緇叩石鼓。",
    "X72n1437_021:0505a19_7": "胡為濡滯愧山靈。",
    "X72n1437_021:0505a19_8": "韓范功業今何在。",
    "X72n1437_021:0505a20_9": "算來嬴得一虗名。",
    "X72n1437_021:0505a20_10": "若待功成方斂迹。",
    "X72n1437_021:0505a20_11": "巖石雲中也笑人。",
    "X72n1437_021:0505a21_12": "舉世盡因名利醉。",
    "X72n1437_021:0505a21_13": "堪嘆無人號獨醒。",
    "X72n1437_021:0505a21_14": "我今預掃峰頭石。",
    "X72n1437_021:0505a22_15": "徯君共操沒弦琴。",
    "X72n1437_021:0505a23_0": "侍講陳仲謀居士贊",
    "X72n1437_021:0505a24_0": "剛介如君有幾人。",
    "X72n1437_021:0505a24_1": "寒梅雪裏一枝春。",
    "X72n1437_021:0505a24_2": "披緇獨對巖前月。",
    "X72n1437_021:0505b01_3": "却是先朝骨骾臣。",
    "X72n1437_021:0505b02_0": "德山樵者贊(有引)",
    "X72n1437_021:0505b03_0": "樵者楊姓。",
    "X72n1437_021:0505b03_1": "諱逢京。",
    "X72n1437_021:0505b03_2": "別號泰宇。",
    "X72n1437_021:0505b03_3": "德山其所隱也。",
    "X72n1437_021:0505b03_4": "生出華胄。",
    "X72n1437_021:0505b04_5": "跡混禪侶。",
    "X72n1437_021:0505b04_6": "其宅心制行。",
    "X72n1437_021:0505b04_7": "月旦多賢之。",
    "X72n1437_021:0505b04_8": "然以賢而貧。",
    "X72n1437_021:0505b05_0": "亦以貧而益見其賢。",
    "X72n1437_021:0505b05_1": "則其貧也不亦善乎。",
    "X72n1437_021:0505b05_2": "厥嗣逸凡氏。",
    "X72n1437_021:0505b06_3": "有乃父風。",
    "X72n1437_021:0505b06_4": "持其像求贊。",
    "X72n1437_021:0505b06_5": "余謂。",
    "X72n1437_021:0505b06_6": "若居士者。",
    "X72n1437_021:0505b06_7": "可以風矣。",
    "X72n1437_021:0505b07_0": "漫題數語。",
    "X72n1437_021:0505b07_1": "以塞其請。",
    "X72n1437_021:0505b08_0": "淵淵其衷。",
    "X72n1437_021:0505b08_1": "穆穆其容。",
    "X72n1437_021:0505b08_2": "居德以厚。",
    "X72n1437_021:0505b08_3": "育德以冲。",
    "X72n1437_021:0505b08_4": "中歲好道。",
    "X72n1437_021:0505b09_0": "益晦厥躬。",
    "X72n1437_021:0505b09_1": "樂施弗倦。",
    "X72n1437_021:0505b09_2": "晚乃愈窮。",
    "X72n1437_021:0505b09_3": "矢志西方。",
    "X72n1437_021:0505b09_4": "如水必東。",
    "X72n1437_021:0505b10_0": "臨終翛然。",
    "X72n1437_021:0505b10_1": "鴈過長空。",
    "X72n1437_021:0505b10_2": "嗚呼居士。",
    "X72n1437_021:0505b10_3": "其取之物則儉。",
    "X72n1437_021:0505b10_4": "取之道則隆者乎。",
    "X72n1437_021:0505b12_0": "自贊(三十九首)",
    "X72n1437_021:0505b13_0": "這等模樣。",
    "X72n1437_021:0505b13_1": "最是可嫌。",
    "X72n1437_021:0505b13_2": "拂也不竪。",
    "X72n1437_021:0505b13_3": "棒也不拈。",
    "X72n1437_021:0505b13_4": "坐朽木榻。",
    "X72n1437_021:0505b14_0": "漢語胡言。",
    "X72n1437_021:0505b14_1": "呵佛罵祖。",
    "X72n1437_021:0505b14_2": "欺地瞞天。",
    "X72n1437_021:0505b14_3": "簧鼓後學。",
    "X72n1437_021:0505b14_4": "八倒七顛。",
    "X72n1437_021:0505b15_0": "山不露頂。",
    "X72n1437_021:0505b15_1": "月隱半邊。",
    "X72n1437_021:0505b15_2": "雖然全無道理。",
    "X72n1437_021:0505b15_3": "要也不負曹洞之傳。",
    "X72n1437_021:0505b17_0": "苒荏半生。",
    "X72n1437_021:0505b17_1": "行年五十。",
    "X72n1437_021:0505b17_2": "逢人惡發。",
    "X72n1437_021:0505b17_3": "全無諱忌。",
    "X72n1437_021:0505b17_4": "罵盡百聖千賢。",
    "X72n1437_021:0505b18_5": "自云為諸佛出氣。",
    "X72n1437_021:0505b18_6": "出言不涉典章。",
    "X72n1437_021:0505b18_7": "舉動全同兒戲。",
    "X72n1437_021:0505b19_8": "直是攪亂乾坤。",
    "X72n1437_021:0505b19_9": "一任人天厭棄。",
    "X72n1437_021:0505b19_10": "莫是教外別傳麼。",
    "X72n1437_021:0505b20_0": "咄。",
    "X72n1437_021:0505b20_1": "迦葉師兄也未是(白水巖請)。",
    "X72n1437_021:0505b21_0": "癡隱荷山八載。",
    "X72n1437_021:0505b21_1": "未敢虗空安橛。",
    "X72n1437_021:0505b21_2": "諸方浩浩談禪。",
    "X72n1437_021:0505b21_3": "這裏縮頭如鱉。",
    "X72n1437_021:0505b22_4": "每歲栽禾博飯。",
    "X72n1437_021:0505b22_5": "甘把黃金當鐵。",
    "X72n1437_021:0505b22_6": "分明是半文不直。",
    "X72n1437_021:0505b23_7": "如何稱壽昌嫡血。",
    "X72n1437_021:0505b23_8": "葢為多虗不如少實。",
    "X72n1437_021:0505b23_9": "千巧不如一拙(荷山請)。",
    "X72n1437_021:0505c01_0": "我不是你。",
    "X72n1437_021:0505c01_1": "你却是我。",
    "X72n1437_021:0505c01_2": "春風一面。",
    "X72n1437_021:0505c01_3": "秋雲一朵。",
    "X72n1437_021:0505c01_4": "黃楊木禪。",
    "X72n1437_021:0505c02_0": "無罅縫鎖。",
    "X72n1437_021:0505c02_1": "今年走入溫陵城。",
    "X72n1437_021:0505c02_2": "恰似泥塗行鱉跛。",
    "X72n1437_021:0505c02_3": "咦。",
    "X72n1437_021:0505c02_4": "溫州橘皮不是火(開元寺請)。",
    "X72n1437_021:0505c04_0": "這箇老漢。",
    "X72n1437_021:0505c04_1": "一生杜田。",
    "X72n1437_021:0505c04_2": "不解學佛學祖。",
    "X72n1437_021:0505c04_3": "祇會伸脚打眠。",
    "X72n1437_021:0505c05_0": "有人問著無可對。",
    "X72n1437_021:0505c05_1": "便說渠是教外別傳。",
    "X72n1437_021:0505c05_2": "呵呵。",
    "X72n1437_021:0505c05_3": "曾在壽昌橋上過。",
    "X72n1437_021:0505c06_4": "鼻孔從來沒半邊。",
    "X72n1437_021:0505c07_0": "這箇老乞兒。",
    "X72n1437_021:0505c07_1": "鄙哉無所能。",
    "X72n1437_021:0505c07_2": "古今俱不似。",
    "X72n1437_021:0505c07_3": "凡聖並生憎。",
    "X72n1437_021:0505c08_0": "掀翻三藏教。",
    "X72n1437_021:0505c08_1": "滅盡五家燈。",
    "X72n1437_021:0505c08_2": "渠有甚長處。",
    "X72n1437_021:0505c08_3": "光頭一箇僧。",
    "X72n1437_021:0505c09_0": "這漢無知。",
    "X72n1437_021:0505c09_1": "不分豕亥。",
    "X72n1437_021:0505c09_2": "掉頭不說壽昌宗。",
    "X72n1437_021:0505c09_3": "舉足踏破苕溪戒。",
    "X72n1437_021:0505c10_4": "全是使鬼驅風。",
    "X72n1437_021:0505c10_5": "一任貴買賤賣。",
    "X72n1437_021:0505c10_6": "浪得虗名在世間。",
    "X72n1437_021:0505c11_7": "祇為少了閻浮債(真寂院請)。",
    "X72n1437_021:0505c12_0": "鼓山一片雲。",
    "X72n1437_021:0505c12_1": "苕溪一點泡。",
    "X72n1437_021:0505c12_2": "祇是破敗凡夫。",
    "X72n1437_021:0505c12_3": "那能論禪論道。",
    "X72n1437_021:0505c13_4": "切莫將他供養。",
    "X72n1437_021:0505c13_5": "只好深埋雪窖(真寂院請)。",
    "X72n1437_021:0505c14_0": "撞破南泉之門。",
    "X72n1437_021:0505c14_1": "逸出壽昌之廐。",
    "X72n1437_021:0505c14_2": "胸中全沒半點。",
    "X72n1437_021:0505c14_3": "到處說三道四。",
    "X72n1437_021:0505c15_4": "如今流泊苕溪灣。",
    "X72n1437_021:0505c15_5": "沙盆指作瑚璉器。",
    "X72n1437_021:0505c15_6": "雖然歷主三剎。",
    "X72n1437_021:0505c16_7": "一任虗舟游戲。",
    "X72n1437_021:0505c16_8": "莫道渠是五百人善知識。",
    "X72n1437_021:0505c17_0": "却也祇同浮寄。",
    "X72n1437_021:0505c18_0": "向諸佛頂上橫行。",
    "X72n1437_021:0505c18_1": "借壽昌棒下出氣。",
    "X72n1437_021:0505c18_2": "祇在唇邊鼓是非。",
    "X72n1437_021:0505c19_3": "有口無心無避忌。",
    "X72n1437_021:0505c19_4": "呵呵。",
    "X72n1437_021:0505c19_5": "誰能得見半邊鼻。",
    "X72n1437_021:0505c20_0": "這漢無知。",
    "X72n1437_021:0505c20_1": "肚裏無禪。",
    "X72n1437_021:0505c20_2": "妄拈拂子。",
    "X72n1437_021:0505c20_3": "誑惑人天。",
    "X72n1437_021:0505c20_4": "出世纔四載。",
    "X72n1437_021:0505c21_5": "開堂祇二年。",
    "X72n1437_021:0505c21_6": "便爾縮頭度日。",
    "X72n1437_021:0505c21_7": "每好伸脚打眠。",
    "X72n1437_021:0505c21_8": "謬傳渠是壽昌嫡子。",
    "X72n1437_021:0505c22_9": "看來不值半文錢。",
    "X72n1437_021:0505c23_0": "把苕溪釣。",
    "X72n1437_021:0505c23_1": "撾鼓山鼓。",
    "X72n1437_021:0505c23_2": "半點佛法全無。",
    "X72n1437_021:0505c23_3": "却要呵佛罵祖。",
    "X72n1437_021:0505c24_0": "諸方寶若黃金。",
    "X72n1437_021:0505c24_1": "渠直詆為糞土。",
    "X72n1437_021:0505c24_2": "因甚不近人情。",
    "X72n1437_021:0505c24_3": "只為苦瓜連根苦。",
    "X72n1437_021:0506a02_0": "石鼓峰頭。",
    "X72n1437_021:0506a02_1": "一場破敗。",
    "X72n1437_021:0506a02_2": "苕谿岸畔。",
    "X72n1437_021:0506a02_3": "喪盡家風。",
    "X72n1437_021:0506a02_4": "逢人專好打哄。",
    "X72n1437_021:0506a03_5": "盡是指西為東。",
    "X72n1437_021:0506a03_6": "今被人描上紙去。",
    "X72n1437_021:0506a03_7": "原來是箇老禿翁。",
    "X72n1437_021:0506a05_0": "黃龍峰下橫遭毒。",
    "X72n1437_021:0506a05_1": "延津岸畔喪全身。",
    "X72n1437_021:0506a05_2": "而今遺影在沙陽。",
    "X72n1437_021:0506a06_3": "切忌認假為真。",
    "X72n1437_021:0506a07_0": "石鼓山頭。",
    "X72n1437_021:0506a07_1": "舉網張風。",
    "X72n1437_021:0506a07_2": "苕谿岸畔。",
    "X72n1437_021:0506a07_3": "垂竿釣月。",
    "X72n1437_021:0506a07_4": "看來一場懡[怡台+羅]。",
    "X72n1437_021:0506a08_5": "不如閉口藏舌。",
    "X72n1437_021:0506a08_6": "甘心五載不開堂。",
    "X72n1437_021:0506a08_7": "直是癡癡長守拙。",
    "X72n1437_021:0506a09_8": "相逢切莫問他宗。",
    "X72n1437_021:0506a09_9": "不是曹溪一點血。",
    "X72n1437_021:0506a10_0": "這老乞兒。",
    "X72n1437_021:0506a10_1": "是何模樣。",
    "X72n1437_021:0506a10_2": "三界不能安。",
    "X72n1437_021:0506a10_3": "虗空不可量。",
    "X72n1437_021:0506a10_4": "無端影落世間。",
    "X72n1437_021:0506a11_5": "一任天人供養。",
    "X72n1437_021:0506a12_0": "悞入大好山中。",
    "X72n1437_021:0506a12_1": "便敢當仁不讓。",
    "X72n1437_021:0506a12_2": "佛法半點也無。",
    "X72n1437_021:0506a12_3": "只知十尺一丈。",
    "X72n1437_021:0506a14_0": "一張白紙頗相似。",
    "X72n1437_021:0506a14_1": "怎奈丹青塗汙何。",
    "X72n1437_021:0506a14_2": "空潭月影非真實。",
    "X72n1437_021:0506a15_3": "任你諸人枉揣摩。",
    "X72n1437_021:0506a16_0": "誰人描我像。",
    "X72n1437_021:0506a16_1": "形貌也不殊。",
    "X72n1437_021:0506a16_2": "右手握拄杖。",
    "X72n1437_021:0506a16_3": "左手持數珠。",
    "X72n1437_021:0506a17_0": "翻成太多事。",
    "X72n1437_021:0506a17_1": "何必徒區區。",
    "X72n1437_021:0506a17_2": "不如兩撒手。",
    "X72n1437_021:0506a17_3": "方能識得渠。",
    "X72n1437_021:0506a18_0": "識得渠。",
    "X72n1437_021:0506a18_1": "只是一頭驢。",
    "X72n1437_021:0506a19_0": "屴崱峰頭。",
    "X72n1437_021:0506a19_1": "白雲一片。",
    "X72n1437_021:0506a19_2": "苕溪岸畔。",
    "X72n1437_021:0506a19_3": "釣綸一線。",
    "X72n1437_021:0506a19_4": "六凡渠不入。",
    "X72n1437_021:0506a20_5": "四聖渠不見。",
    "X72n1437_021:0506a20_6": "一任諸人描出。",
    "X72n1437_021:0506a20_7": "也祇是箇炎天破扇。",
    "X72n1437_021:0506a21_0": "悞入壽昌門。",
    "X72n1437_021:0506a21_1": "冒繼興聖席。",
    "X72n1437_021:0506a21_2": "通霄路上許誰行。",
    "X72n1437_021:0506a21_3": "獨握雲中一楖栗。",
    "X72n1437_021:0506a22_4": "橫拈直竪幾人知。",
    "X72n1437_021:0506a22_5": "徹底全無消息。",
    "X72n1437_021:0506a23_0": "咄哉老乞兒。",
    "X72n1437_021:0506a23_1": "不識達摩禪。",
    "X72n1437_021:0506a23_2": "虗受人天供。",
    "X72n1437_021:0506a23_3": "高臥白雲邊。",
    "X72n1437_021:0506a24_0": "有時竪一拂。",
    "X72n1437_021:0506a24_1": "欺地亦瞞天。",
    "X72n1437_021:0506a24_2": "被人亂描出。",
    "X72n1437_021:0506a24_3": "看來大可憐。",
    "X72n1437_021:0506b01_0": "年老無知何所能。",
    "X72n1437_021:0506b01_1": "非凡非聖得人憎。",
    "X72n1437_021:0506b01_2": "莫謂壽昌嫡血嗣。",
    "X72n1437_021:0506b02_3": "只是光頭一老僧。",
    "X72n1437_021:0506b03_0": "此老漢。",
    "X72n1437_021:0506b03_1": "無可說。",
    "X72n1437_021:0506b03_2": "兀坐石鼓峰頭。",
    "X72n1437_021:0506b03_3": "分明只得一橛。",
    "X72n1437_021:0506b03_4": "瞎盡眾生眼。",
    "X72n1437_021:0506b04_5": "畵餅指作月。",
    "X72n1437_021:0506b04_6": "莫道渠得洞上禪。",
    "X72n1437_021:0506b04_7": "白雲深處長守拙。",
    "X72n1437_021:0506b06_0": "一匙洞水作波瀾。",
    "X72n1437_021:0506b06_1": "竪拂敢將千聖瞞。",
    "X72n1437_021:0506b06_2": "抖碎虗空無可似。",
    "X72n1437_021:0506b07_3": "任他十界也難安。",
    "X72n1437_021:0506b08_0": "棃川橋下。",
    "X72n1437_021:0506b08_1": "撥波求水。",
    "X72n1437_021:0506b08_2": "屴崱峰頭。",
    "X72n1437_021:0506b08_3": "舉網張風。",
    "X72n1437_021:0506b08_4": "顛倒全不成人。",
    "X72n1437_021:0506b09_5": "指西便喚作東。",
    "X72n1437_021:0506b09_6": "只是無識任唇舌。",
    "X72n1437_021:0506b09_7": "騙人道是洞上宗。",
    "X72n1437_021:0506b11_0": "入壽昌門。",
    "X72n1437_021:0506b11_1": "繼洞上武。",
    "X72n1437_021:0506b11_2": "播苕溪浪。",
    "X72n1437_021:0506b11_3": "撾鼓山鼓。",
    "X72n1437_021:0506b11_4": "等閒笑破五家宗。",
    "X72n1437_021:0506b12_5": "箇裏不容諸佛祖。",
    "X72n1437_021:0506b12_6": "祇是空拳誑小兒。",
    "X72n1437_021:0506b12_7": "直把黃金喚作土。",
    "X72n1437_021:0506b14_0": "壽昌碌碌僧。",
    "X72n1437_021:0506b14_1": "冒坐鼓山頭。",
    "X72n1437_021:0506b14_2": "不達教外旨。",
    "X72n1437_021:0506b14_3": "見馬却呼牛。",
    "X72n1437_021:0506b15_0": "倒佛祖旗鎗。",
    "X72n1437_021:0506b15_1": "結七眾冤仇。",
    "X72n1437_021:0506b15_2": "眼中滄海小。",
    "X72n1437_021:0506b15_3": "凡聖竝生愁。",
    "X72n1437_021:0506b16_0": "石鼓輕撾十四秋。",
    "X72n1437_021:0506b16_1": "直教凡聖盡成愁。",
    "X72n1437_021:0506b16_2": "何如穩臥深雲裏。",
    "X72n1437_021:0506b17_3": "一任山高及水流。",
    "X72n1437_021:0506b18_0": "行年七十。",
    "X72n1437_021:0506b18_1": "徹底愚痴。",
    "X72n1437_021:0506b18_2": "問禪不會。",
    "X72n1437_021:0506b18_3": "問教不知。",
    "X72n1437_021:0506b18_4": "祇是一柄拂子。",
    "X72n1437_021:0506b19_5": "橫拈直竪。",
    "X72n1437_021:0506b19_6": "令人可疑。",
    "X72n1437_021:0506b19_7": "恁麼脫空老漢。",
    "X72n1437_021:0506b19_8": "千佛聞之攢眉。",
    "X72n1437_021:0506b20_9": "渠却自負道。",
    "X72n1437_021:0506b20_10": "靈山最後拈出一枝。",
    "X72n1437_021:0506b21_0": "屴崱峰頭客。",
    "X72n1437_021:0506b21_1": "尋常無軌則。",
    "X72n1437_021:0506b21_2": "開口不是話。",
    "X72n1437_021:0506b21_3": "凡聖俱莫測。",
    "X72n1437_021:0506b22_0": "賊賊。",
    "X72n1437_021:0506b22_1": "東土西方容不得。",
    "X72n1437_021:0506b23_0": "此老比丘。",
    "X72n1437_021:0506b23_1": "法門中賊。",
    "X72n1437_021:0506b23_2": "據興聖座。",
    "X72n1437_021:0506b23_3": "說黃道白。",
    "X72n1437_021:0506b23_4": "破滅佛祖宗猷。",
    "X72n1437_021:0506b24_5": "截斷眾生命脉。",
    "X72n1437_021:0506b24_6": "如今年老益猖狂。",
    "X72n1437_021:0506b24_7": "倒倒顛顛無軌則。",
    "X72n1437_021:0506c01_8": "騙盡人間供養。",
    "X72n1437_021:0506c01_9": "難逃閻老訶責。",
    "X72n1437_021:0506c01_10": "咦。",
    "X72n1437_021:0506c02_0": "博地凡夫僧。",
    "X72n1437_021:0506c02_1": "不識諸佛祖。",
    "X72n1437_021:0506c02_2": "橫擔一片板。",
    "X72n1437_021:0506c02_3": "非今亦非古。",
    "X72n1437_021:0506c03_0": "執一少變通。",
    "X72n1437_021:0506c03_1": "直是愚且魯。",
    "X72n1437_021:0506c03_2": "任他人笑罵。",
    "X72n1437_021:0506c03_3": "默然祇自許。",
    "X72n1437_021:0506c04_0": "壽昌孤風。",
    "X72n1437_021:0506c04_1": "崛起萬仞。",
    "X72n1437_021:0506c04_2": "鼓山得之。",
    "X72n1437_021:0506c04_3": "繼行其令。",
    "X72n1437_021:0506c04_4": "興洞水波。",
    "X72n1437_021:0506c05_0": "出曹山穽。",
    "X72n1437_021:0506c05_1": "不知正偏。",
    "X72n1437_021:0506c05_2": "起眾生病。",
    "X72n1437_021:0506c05_3": "金針玉線幾人知。",
    "X72n1437_021:0506c05_4": "是謂諸佛慧命。",
    "X72n1437_021:0506c07_0": "屴崱峰頭。",
    "X72n1437_021:0506c07_1": "潦倒比丘。",
    "X72n1437_021:0506c07_2": "己靈不重。",
    "X72n1437_021:0506c07_3": "諸聖不求。",
    "X72n1437_021:0506c07_4": "開口偏罵佛祖。",
    "X72n1437_021:0506c08_5": "大似冤仇。",
    "X72n1437_021:0506c08_6": "炊無米飯。",
    "X72n1437_021:0506c08_7": "駕無底舟。",
    "X72n1437_021:0506c08_8": "直是箇不本分僧。",
    "X72n1437_021:0506c09_9": "却道渠是洞水逆流。",
    "X72n1437_021:0506c10_0": "大圓鏡中。",
    "X72n1437_021:0506c10_1": "突然者箇。",
    "X72n1437_021:0506c10_2": "若道是渠是我。",
    "X72n1437_021:0506c10_3": "便成錯過。",
    "X72n1437_021:0506c10_4": "若道非聖非凡。",
    "X72n1437_021:0506c11_5": "亦是話墮。",
    "X72n1437_021:0506c11_6": "船子藏身。",
    "X72n1437_021:0506c11_7": "誰能勘破。",
    "X72n1437_021:0506c11_8": "洞山覩影。",
    "X72n1437_021:0506c12_0": "方堪領荷。",
    "X72n1437_021:0506c12_1": "道順持此作麼。",
    "X72n1437_021:0506c12_2": "只好當面便唾(順侍者請)。",
    "X72n1437_021:0506c13_0": "壽昌崛起。",
    "X72n1437_021:0506c13_1": "洞水生波。",
    "X72n1437_021:0506c13_2": "博山繼之。",
    "X72n1437_021:0506c13_3": "如江如河。",
    "X72n1437_021:0506c13_4": "我是何人。",
    "X72n1437_021:0506c14_0": "亦唱哩囉。",
    "X72n1437_021:0506c14_1": "三箇柴頭安品字。",
    "X72n1437_021:0506c14_2": "玉石依稀差不多。",
    "X72n1437_021:0506c14_3": "于今遺影在世間。",
    "X72n1437_021:0506c15_4": "一任笑者笑訶者訶(右壽昌愽山及師三像同軸)。",
    "X72n1437_021:0506c16_0": "屴崱峰頭老禿翁。",
    "X72n1437_021:0506c16_1": "長年高臥白雲中。",
    "X72n1437_021:0506c16_2": "有人問彼西來意。",
    "X72n1437_021:0506c17_3": "笑指天邊日出東。",
    "X72n1437_021:0506c18_0": "這老翁杜蠻禪。",
    "X72n1437_021:0506c18_1": "自言渠在威音前。",
    "X72n1437_021:0506c18_2": "搖頭不信佛與祖。",
    "X72n1437_021:0506c19_0": "五宗不值半文錢。",
    "X72n1437_021:0506c19_1": "口中好起無風浪。",
    "X72n1437_021:0506c19_2": "教人掘地去尋天。",
    "X72n1437_021:0506c20_3": "似者樣顛倒作口業。",
    "X72n1437_021:0506c20_4": "不如且學痴呆漢。",
    "X72n1437_021:0506c20_5": "饑時吃飯困時眠。",
    "X72n1437_021:0506c22_0": "幼齡學東魯。",
    "X72n1437_021:0506c22_1": "矢志師前賢。",
    "X72n1437_021:0506c22_2": "中歲慕西竺。",
    "X72n1437_021:0506c22_3": "志不在人天。",
    "X72n1437_021:0506c23_0": "收得壽昌塵。",
    "X72n1437_021:0506c23_1": "效顰亦說禪。",
    "X72n1437_021:0506c23_2": "始末經四剎。",
    "X72n1437_021:0506c23_3": "拈弄二十年。",
    "X72n1437_021:0506c24_0": "警俗多苦口。",
    "X72n1437_021:0506c24_1": "衛道在諸篇。",
    "X72n1437_021:0506c24_2": "一生渾夢事。",
    "X72n1437_021:0506c24_3": "幻像徒儼然。",
    "X72n1437_021:0507a01_0": "寄住閻浮八十年。",
    "X72n1437_021:0507a01_1": "半生蹤跡白雲邊。",
    "X72n1437_021:0507a01_2": "矢口千言欺佛祖。",
    "X72n1437_021:0507a02_3": "看來不值半文錢。",
    "X72n1437_021:0507a03_0": "這老漢。",
    "X72n1437_021:0507a03_1": "性太偏。",
    "X72n1437_021:0507a03_2": "橫擔板一片。",
    "X72n1437_021:0507a03_3": "不信達摩禪。",
    "X72n1437_021:0507a03_4": "逢人好起無風浪。",
    "X72n1437_021:0507a04_5": "教他掘地去尋天。",
    "X72n1437_021:0507a04_6": "行年八十成何事。",
    "X72n1437_021:0507a04_7": "笑破虗空嘴半邊。",
    "X72n1437_021:0507a06_0": "老漢行年今八十。",
    "X72n1437_021:0507a06_1": "世間事事皆收拾。",
    "X72n1437_021:0507a06_2": "惟者影子徧諸方。",
    "X72n1437_021:0507a07_3": "敗露重重遮不及。",
    "X72n1437_021:0507a07_4": "還知麼。",
    "X72n1437_021:0507a07_5": "有相身中無相身。",
    "X72n1437_021:0507a07_6": "低頭方見明歷歷(師臨終前一日。",
    "X72n1437_021:0507a08_7": "坐方丈受大眾參禮。",
    "X72n1437_021:0507a08_8": "僧有持師像求贊者。",
    "X72n1437_021:0507a08_9": "為題此)。",
    "X72n1437_021:0507a10_0": "永覺和尚廣錄卷第二十一"
}