[
    {
        "source_sentence": "妙法聖念處經卷第五",
        "from": "T17n0722_005:0430b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大宋西天中印度摩伽陀國",
        "from": "T17n0722_005:0430b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那爛陀寺三藏傳教大師賜紫",
        "from": "T17n0722_005:0430b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門臣法天奉　詔譯爾時，天主帝釋而白眾言：",
        "from": "T17n0722_005:0430b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝所作善，守護增長如意歡喜。",
        "from": "T17n0722_005:0430c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」即說伽陀曰：",
        "from": "T17n0722_005:0430c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「三種善作已，　　三種三因緣，",
        "from": "T17n0722_005:0430c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三位次三地，　　三德三大果；",
        "from": "T17n0722_005:0430c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不殺施最上，　　此法汝愛樂，",
        "from": "T17n0722_005:0430c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得真實忍辱，　　獲生一切天；",
        "from": "T17n0722_005:0430c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨身有宮殿，　　快樂受無極。",
        "from": "T17n0722_005:0430c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人好不善，　　生處無安樂，",
        "from": "T17n0722_005:0430c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪法被增纏，　　云何而出離？",
        "from": "T17n0722_005:0430c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此人、天善，　　熏修本識中，",
        "from": "T17n0722_005:0430c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼業感果時，　　得生人、天界，",
        "from": "T17n0722_005:0430c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼生愛樂，　　心自住安樂。",
        "from": "T17n0722_005:0430c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，天主帝釋而復白言：",
        "from": "T17n0722_005:0430c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝等具大福德，獲生天界受天快樂，隨其福果勝劣各異。",
        "from": "T17n0722_005:0430c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若種種作福，薰識身中，後生天界得種種快樂。",
        "from": "T17n0722_005:0430c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切林木花果，悅適人意；",
        "from": "T17n0722_005:0430c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入彼林中，彼天飛鳥演說言音，令人樂聞，為彼天子即說伽陀曰：",
        "from": "T17n0722_005:0430c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「『善來汝賢敏，　　宿習於上善，",
        "from": "T17n0722_005:0430c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅持七律儀，　　成就最勝果；",
        "from": "T17n0722_005:0430c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生彼天界中，　　受天快樂報。",
        "from": "T17n0722_005:0430c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣持於禁戒，　　得離沈淪苦，",
        "from": "T17n0722_005:0430c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶戒清淨故，　　感天勝妙池，",
        "from": "T17n0722_005:0430c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意而洗浴；",
        "from": "T17n0722_005:0430c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　復雨紫金花，散布於身上；",
        "from": "T17n0722_005:0430c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　及彼功德池，以彼戒種子，　　念念為防非；",
        "from": "T17n0722_005:0430c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天中上妙樂，　　隨意而受用。",
        "from": "T17n0722_005:0430c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人意決定，　　守護於禁戒，",
        "from": "T17n0722_005:0430c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生彼天界時，　　快樂無邊際。",
        "from": "T17n0722_005:0430c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此戒莊嚴，　　得趣善逝果，",
        "from": "T17n0722_005:0430c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而受解脫樂；",
        "from": "T17n0722_005:0431a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　破戒罪惡深，如刀及火毒；",
        "from": "T17n0722_005:0431a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　是故堅持戒，而修施法財，　　遠離於毀禁。",
        "from": "T17n0722_005:0431a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業有上、中、下，　　感果亦復然，",
        "from": "T17n0722_005:0431a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今成勝報身，　　常戴光明鬘，",
        "from": "T17n0722_005:0431a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受天種種樂，　　皎潔身無垢。",
        "from": "T17n0722_005:0431a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人造惡業，　　苦果自纏身，",
        "from": "T17n0722_005:0431a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉受沈淪，　　生死無窮盡。",
        "from": "T17n0722_005:0431a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝既來生此，　　受天眾娛樂，",
        "from": "T17n0722_005:0431a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出遊諸園苑，　　勿著於放逸，",
        "from": "T17n0722_005:0431a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逸蕩過失深，　　如來常說此；",
        "from": "T17n0722_005:0431a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故放逸者，　　三毒中最上。",
        "from": "T17n0722_005:0431a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進如甘露，　　心頂自清涼，",
        "from": "T17n0722_005:0431a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永超生死輪，　　究竟菩提岸。",
        "from": "T17n0722_005:0431a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時我如來，　　演說微妙言，",
        "from": "T17n0722_005:0431a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離我速修行，　　莫著顛倒想；",
        "from": "T17n0722_005:0431a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有違背者，　　貪等諸惑生，",
        "from": "T17n0722_005:0431a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷彼解脫緣，　　漂沈諸苦海。",
        "from": "T17n0722_005:0431a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」爾時，天主帝釋，速疾往彼善法堂中，諸天妓女及一切天眾，皆來善法堂中。",
        "from": "T17n0722_005:0431a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到已，娛樂種種遊戲。",
        "from": "T17n0722_005:0431a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時，天帝觀察娛樂，而知天眾虛妄耽著增長煩惱，即說伽他曰：",
        "from": "T17n0722_005:0431a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「虛妄境界中，　　貪愛而無足，",
        "from": "T17n0722_005:0431a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情迷執深，　　增長諸煩惱；",
        "from": "T17n0722_005:0431a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被境縛根識，　　如毒藏在食，",
        "from": "T17n0722_005:0431a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於後若消時，　　迷悶無安樂。",
        "from": "T17n0722_005:0431a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無前、後、中間，　　非今世、後世，",
        "from": "T17n0722_005:0431a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣會遇時，　　業報誰能避？",
        "from": "T17n0722_005:0431a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，天主帝釋說此伽他已，而復告言：",
        "from": "T17n0722_005:0431a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「假使少年強力，未必長生，四相推遷，速歸散滅。",
        "from": "T17n0722_005:0431b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯現快樂，無實自性，樂受盡時，逼迫身心，無暫安隱。",
        "from": "T17n0722_005:0431b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等勿得信任癡迷、愚惑、諂誑，若於一切境界染著不足，後致大患。",
        "from": "T17n0722_005:0431b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如熾火焚燒草葉，貪著境界增諸過失，亦復如是。",
        "from": "T17n0722_005:0431b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被煩惱火燒煮身心，棄背正道，衰相現時，墮落天界。",
        "from": "T17n0722_005:0431b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故，我今教化汝等，割截煩惱，去除迷惑；",
        "from": "T17n0722_005:0431b07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天眾，自此恒作利益於最上行法，志固修習，後得寂靜最上安樂。",
        "from": "T17n0722_005:0431b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今勿得慢易，速作良田。",
        "from": "T17n0722_005:0431b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於當當世而得最上報應，適意無盡。",
        "from": "T17n0722_005:0431b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作惡業種種隨身，墜墮天宮，沈淪惡趣，一切宮殿樓閣，悉皆隱沒。",
        "from": "T17n0722_005:0431b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，天主帝釋見其天子，須臾命終，墮於惡趣，而說伽他曰：",
        "from": "T17n0722_005:0431b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「微妙香蓮花，　　種種生峯頂，",
        "from": "T17n0722_005:0431b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上適意寶，　　處處作莊嚴。",
        "from": "T17n0722_005:0431b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流泉與浴池，　　雜色花果樹，",
        "from": "T17n0722_005:0431b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及紫金劫樹，　　靈鳥群集上，",
        "from": "T17n0722_005:0431b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常出微妙音，　　悅樂諸天眾。",
        "from": "T17n0722_005:0431b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無垢琉璃寶，　　間雜金色光，",
        "from": "T17n0722_005:0431b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上妙樓臺，　　莊嚴恒適意。",
        "from": "T17n0722_005:0431b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群生不遠離，　　寧知是幻化，",
        "from": "T17n0722_005:0431b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如泡、如水沫，　　如電、如浮雲，",
        "from": "T17n0722_005:0431b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如尋香城，　　須臾即散滅。",
        "from": "T17n0722_005:0431b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛妄若生貪，　　墜墮輪迴路，",
        "from": "T17n0722_005:0431b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡愛毒如火，　　焚燒於善根，",
        "from": "T17n0722_005:0431b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "減損於天眾，　　去一切菩提。",
        "from": "T17n0722_005:0431b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又復告言：",
        "from": "T17n0722_005:0431b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若天愚癡，愛人誑惑，為天、阿素落、羅剎等之所降伏，後墮地獄；",
        "from": "T17n0722_005:0431b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為龍蛇，遠離諸天，長處三界，如繩繫縛而不自在。",
        "from": "T17n0722_005:0431c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若離癡愛，明了通達，利益有情，歸依佛道，永出世間，斷有愛支，得一切智；",
        "from": "T17n0722_005:0431c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等無礙，得三解脫，證悟苦、空到真實際，遠離輪迴，不受後有，色、香、味、觸而不染著。",
        "from": "T17n0722_005:0431c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」時，彼天帝見多天眾，念念無常，增諸過失，深生悲愍，發誠實言，而說伽他曰：",
        "from": "T17n0722_005:0431c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如是天道終，　　沈淪百千劫，",
        "from": "T17n0722_005:0431c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如旋火輪，　　生死何窮盡？",
        "from": "T17n0722_005:0431c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見他受無常，　　不觀於自己，",
        "from": "T17n0722_005:0431c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後自命終時，　　違害亦如是。",
        "from": "T17n0722_005:0431c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若捨垢穢心，　　不著於境界，",
        "from": "T17n0722_005:0431c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死莫能侵，　　常住真寂樂。",
        "from": "T17n0722_005:0431c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒行若違犯，　　如醉飲藥毒，",
        "from": "T17n0722_005:0431c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非天魔死軍，　　纏縛誰救濟？",
        "from": "T17n0722_005:0431c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微塵坌面上，　　自心何知見，",
        "from": "T17n0722_005:0431c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命謝臥林間，　　誰悟從貪愛？",
        "from": "T17n0722_005:0431c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生於貪愛，　　同住苦無常，",
        "from": "T17n0722_005:0431c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永處於生死，　　現離於安樂；",
        "from": "T17n0722_005:0431c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大惡不斷除，　　輪迴從此得，",
        "from": "T17n0722_005:0431c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如暴惡風，　　能吹山頂葉。",
        "from": "T17n0722_005:0431c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自業得生天，　　娛樂果自受，",
        "from": "T17n0722_005:0431c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潔戒不愚迷，　　安樂自充足。",
        "from": "T17n0722_005:0431c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪愚招墜墮，　　如火而起煙，",
        "from": "T17n0722_005:0431c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後自墮泥黎，　　業報亦如是。",
        "from": "T17n0722_005:0431c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，有天名烏波󰣿踰，宿善業力，生忉利天。",
        "from": "T17n0722_005:0431c26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有苾芻為其天王，而說伽他曰：",
        "from": "T17n0722_005:0431c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若作種種業，　　處處妄攀緣，",
        "from": "T17n0722_005:0431c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以心迷惑力，　　一切業成就。",
        "from": "T17n0722_005:0431c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前心最勝故，　　後心相續生，",
        "from": "T17n0722_005:0432a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無間引生彼，　　三界因無盡；",
        "from": "T17n0722_005:0432a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切業報身，　　離心不可得，",
        "from": "T17n0722_005:0432a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故降伏心，　　當獲無盡果。",
        "from": "T17n0722_005:0432a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝速勤修進，　　調伏離執迷，",
        "from": "T17n0722_005:0432a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿善得隨心，　　究竟獲安樂。",
        "from": "T17n0722_005:0432a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心若恒調伏，　　永不增諸過，",
        "from": "T17n0722_005:0432a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者善伏心，　　諸苦不能害。",
        "from": "T17n0722_005:0432a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若心得彼苦，　　苦苦後相續，",
        "from": "T17n0722_005:0432a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切境界中，　　而得輕心報。",
        "from": "T17n0722_005:0432a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天、人、阿素落，　　龍、鬼、羅剎等，",
        "from": "T17n0722_005:0432a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離於一心；",
        "from": "T17n0722_005:0432a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三有自心生，　　地獄與人、天，",
        "from": "T17n0722_005:0432a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心生罪福，　　流浪任漂沈。",
        "from": "T17n0722_005:0432a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞善因迷境，　　愚癡貪愛生，",
        "from": "T17n0722_005:0432a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住苦廣無邊，　　沈溺而難出。",
        "from": "T17n0722_005:0432a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難調心力大，　　奔馳速若風，",
        "from": "T17n0722_005:0432a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天眼勿緣形，　　識相皆如是。",
        "from": "T17n0722_005:0432a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者善調伏，　　遠離魔羅縛，",
        "from": "T17n0722_005:0432a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超度生死河，　　速到於彼岸。",
        "from": "T17n0722_005:0432a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑惑不正直，　　無底惡難止，",
        "from": "T17n0722_005:0432a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一多微細行，　　不住剎那中。",
        "from": "T17n0722_005:0432a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行相密難窮，　　無身一切處，",
        "from": "T17n0722_005:0432a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間誰牽引？",
        "from": "T17n0722_005:0432a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　往者復是誰？",
        "from": "T17n0722_005:0432a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏伏甚法中，　　造作於身業，",
        "from": "T17n0722_005:0432a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖見行表差，　　莫覩相應法。",
        "from": "T17n0722_005:0432a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何調伏難？",
        "from": "T17n0722_005:0432a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　無色、無形相，陋惡損眾生，　　取境明如眼；",
        "from": "T17n0722_005:0432a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡作雖見，　　譬如幻化士，",
        "from": "T17n0722_005:0432a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本性狀難窮，　　往復誰能覩？",
        "from": "T17n0722_005:0432b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牽引於群生，　　諸趣恒流轉，",
        "from": "T17n0722_005:0432b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利劍不能截，　　猛火燒非斷；",
        "from": "T17n0722_005:0432b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情心，　　業力相如是，",
        "from": "T17n0722_005:0432b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業繩而堅固，　　纏縛於群生。",
        "from": "T17n0722_005:0432b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三性而不恒，　　須臾善非善，",
        "from": "T17n0722_005:0432b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復捨受俱，　　攀附六根門。",
        "from": "T17n0722_005:0432b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄求於塵境，　　染著世間故，",
        "from": "T17n0722_005:0432b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不悟生滅法，　　如鏡唯照前，",
        "from": "T17n0722_005:0432b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不鑒於後。",
        "from": "T17n0722_005:0432b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，天子聞彼苾芻說如是事——昔作純善今獲勝身——而說伽他曰：",
        "from": "T17n0722_005:0432b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「昔修靜妙心，　　慎護於戒行，",
        "from": "T17n0722_005:0432b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此微妙因，　　得住安樂道。",
        "from": "T17n0722_005:0432b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善護持戒者，　　防非發律儀，",
        "from": "T17n0722_005:0432b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得斷諸惑，　　證圓寂滅樂。",
        "from": "T17n0722_005:0432b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒有大威德，　　能超諸有苦，",
        "from": "T17n0722_005:0432b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至命謝時，　　無彼惡道畏；",
        "from": "T17n0722_005:0432b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡道無能救，　　戒力救最上。",
        "from": "T17n0722_005:0432b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有持戒者，　　萬善皆依怙，",
        "from": "T17n0722_005:0432b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後果得生天，　　永離諸嶮難；",
        "from": "T17n0722_005:0432b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法聖眾師，　　三界咸尊重。",
        "from": "T17n0722_005:0432b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，諸天子等，五體投地，歸命作禮生尊重心。",
        "from": "T17n0722_005:0432b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時，天主帝釋倍生忻慶，歎美至深，而說伽他曰：",
        "from": "T17n0722_005:0432b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「解脫貪、瞋毒，　　群生親道友，",
        "from": "T17n0722_005:0432b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能到於彼岸，　　我今歸命禮。",
        "from": "T17n0722_005:0432b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏愚癡失，　　無為無比等，",
        "from": "T17n0722_005:0432b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾所尊，　　我今歸命禮。",
        "from": "T17n0722_005:0432b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」時，彼天中有諸飛鳥，或在空中翱翔上下；",
        "from": "T17n0722_005:0432c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或集寶池嬉戲水內。",
        "from": "T17n0722_005:0432c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有諸天子樂逸縱蕩，與諸飛禽同共遊行，耽樂欲樂，不怖惡道。",
        "from": "T17n0722_005:0432c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時，苾芻為彼天子，宣說伽他曰：",
        "from": "T17n0722_005:0432c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「傍生耽欲樂，　　遊戲恣愚迷，",
        "from": "T17n0722_005:0432c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天眾亦復然，　　等彼飛禽類。",
        "from": "T17n0722_005:0432c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正教師宣說，　　汝等心顛倒，",
        "from": "T17n0722_005:0432c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不怖於罪業，　　耽樂著世間。",
        "from": "T17n0722_005:0432c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天有罪業，　　墜墮於地獄，",
        "from": "T17n0722_005:0432c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業力如是毒，　　智者常遠離。",
        "from": "T17n0722_005:0432c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薄德少慧人，　　但觀前欲樂，",
        "from": "T17n0722_005:0432c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復返思惟，　　成就諸苦果。",
        "from": "T17n0722_005:0432c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有智慧人，　　照觀一切惡，",
        "from": "T17n0722_005:0432c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求斷諸惡業，　　利益於群生。",
        "from": "T17n0722_005:0432c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪業生諸苦，　　勝因得離縛，",
        "from": "T17n0722_005:0432c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡行不同，　　報相亦復爾。",
        "from": "T17n0722_005:0432c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷苦妄為樂，　　求安不可逢，",
        "from": "T17n0722_005:0432c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具智勿為非，　　不久至寂滅。",
        "from": "T17n0722_005:0432c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善修諸業靜，　　巧便集善根，",
        "from": "T17n0722_005:0432c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧自現前，　　速到無生位。",
        "from": "T17n0722_005:0432c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿復戀傍生，　　遊嬉於園苑，",
        "from": "T17n0722_005:0432c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懈怠轉增多，　　後墮飛禽類。",
        "from": "T17n0722_005:0432c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復無少智，　　善惡業不分，",
        "from": "T17n0722_005:0432c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓鬼、阿素囉，　　地獄亦如是。",
        "from": "T17n0722_005:0432c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於業能分別，　　於報亦通達，",
        "from": "T17n0722_005:0432c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼於諸業中，　　深窮垢靜相，",
        "from": "T17n0722_005:0432c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜常精進，　　思惟三脫門，",
        "from": "T17n0722_005:0432c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不墮泥黎，　　究竟獲安樂。",
        "from": "T17n0722_005:0432c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天子汝當知，　　自樂自善成，",
        "from": "T17n0722_005:0432c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自惑生自苦，　　苦樂不離心。",
        "from": "T17n0722_005:0433a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於過應遠離，　　染著諸塵境，",
        "from": "T17n0722_005:0433a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱逸癡所盲，　　不覺死王催，",
        "from": "T17n0722_005:0433a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈淪於地獄，　　苦惱而無極。",
        "from": "T17n0722_005:0433a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時彼天，有百千天女色相端嚴，隨意自在，於彼林間歌唱遊戲。",
        "from": "T17n0722_005:0433a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有飛禽知天宿善，而說伽他曰：",
        "from": "T17n0722_005:0433a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「勤修宿善業，　　今復得生天，",
        "from": "T17n0722_005:0433a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行非善因，　　而復沈惡趣。",
        "from": "T17n0722_005:0433a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業報既決定，　　諸天皆平等，",
        "from": "T17n0722_005:0433a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂非安樂，　　汝等今當知。",
        "from": "T17n0722_005:0433a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛染為害本，　　業繩隨繫縛，",
        "from": "T17n0722_005:0433a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪轉而不窮，　　還因業繩力。",
        "from": "T17n0722_005:0433a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上至非想處，　　下及於三途，",
        "from": "T17n0722_005:0433a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往返疾如風，　　生數復如雨，",
        "from": "T17n0722_005:0433a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸趣而循環，　　無始長如此。",
        "from": "T17n0722_005:0433a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人心寂靜，　　如水湛然清，",
        "from": "T17n0722_005:0433a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離礙如虛空，　　而獲最上樂。",
        "from": "T17n0722_005:0433a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五識緣塵境，　　三惡業相牽，",
        "from": "T17n0722_005:0433a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一法捨盡時，　　不得生天界。",
        "from": "T17n0722_005:0433a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺、盜、婬、妄毒，　　常為惡道友，",
        "from": "T17n0722_005:0433a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒煮如炎火，　　智者應觀察；",
        "from": "T17n0722_005:0433a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實忍辱慈，　　出世善良友，",
        "from": "T17n0722_005:0433a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近若修習，　　當得三天果。",
        "from": "T17n0722_005:0433a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "制伏邪亂意，　　慎護觸等貪，",
        "from": "T17n0722_005:0433a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後有定生天，　　成就白業果。",
        "from": "T17n0722_005:0433a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於生死業，　　而不求解脫，",
        "from": "T17n0722_005:0433a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焰魔殺鬼來，　　云何得遠離？",
        "from": "T17n0722_005:0433a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，天主帝釋而復白言：",
        "from": "T17n0722_005:0433a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有眾生不怖諸惡，於一切處心所染著；",
        "from": "T17n0722_005:0433b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以染著故，隱沒智慧。",
        "from": "T17n0722_005:0433b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄言、綺語、虛誑、邪諂，惱亂有情，棄背正教，親近邪師，不孝父母，乃至善根間斷，業繩繫縛。",
        "from": "T17n0722_005:0433b03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如箭速疾，死入地獄，種種治罰，受諸極苦無有休息。",
        "from": "T17n0722_005:0433b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等從今於生死罪緣，速須棄捨，莫復貪著。",
        "from": "T17n0722_005:0433b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自身命，分限短長，審諦觀察。",
        "from": "T17n0722_005:0433b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有為諸行，剎那生滅，何得久住？",
        "from": "T17n0722_005:0433b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如水浮漚，如鏡影像，如電剎那，如雲散滅。",
        "from": "T17n0722_005:0433b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天福盡，樂受捨位，一切衰相不覺現前，逼迫身心，如何當忍？",
        "from": "T17n0722_005:0433b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故，我今宣示言爾：",
        "from": "T17n0722_005:0433b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝今當須勤行精進，忍辱柔和，慈愍有情，守護六根，修行四諦，不取怨親而修平等，智慧增長深入義味，背妄照真，導引禪定。",
        "from": "T17n0722_005:0433b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』業惑盡時，後有不生，得俱解脫。",
        "from": "T17n0722_005:0433b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，天主帝釋欲重宣此義，復說伽他曰：",
        "from": "T17n0722_005:0433b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如是十二處，　　六境及六根，",
        "from": "T17n0722_005:0433b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識等生滅時，　　相應成妄想。",
        "from": "T17n0722_005:0433b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者善修心，　　不住色等法，",
        "from": "T17n0722_005:0433b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而入寂靜門，　　湛然無一相。",
        "from": "T17n0722_005:0433b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤求寂靜故，　　不墮魔羅界，",
        "from": "T17n0722_005:0433b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此靜妙心，　　恒時而憶念。",
        "from": "T17n0722_005:0433b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行如是慧，　　惑苦云何生？",
        "from": "T17n0722_005:0433b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其三世中，　　自在無驚怖，",
        "from": "T17n0722_005:0433b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱縛自解，　　罪垢不可染；",
        "from": "T17n0722_005:0433b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧眼得圓明，　　常住真寂行。",
        "from": "T17n0722_005:0433b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天身大快樂，　　尚被罪垢摧，",
        "from": "T17n0722_005:0433b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何人愚迷，　　廣造十惡業？",
        "from": "T17n0722_005:0433b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人修智慧，　　了達罪福因，",
        "from": "T17n0722_005:0433b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怖業若死侵，　　永出苦根本。",
        "from": "T17n0722_005:0433b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，帝釋昔聞世尊所說惡趣之事，即為天眾宣說：",
        "from": "T17n0722_005:0433c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛言：",
        "from": "T17n0722_005:0433c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『若人得脫生死罪根，常值善友，植諸善本。",
        "from": "T17n0722_005:0433c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生天界受妙快樂，宮殿莊嚴報應無量；",
        "from": "T17n0722_005:0433c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不怖惡道貪著娛樂，福善盡時必當墮落，譬如燈燭須假膏油，膏油既盡燈焰即滅。",
        "from": "T17n0722_005:0433c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是墮已，而被業風急速吹轉，往返世間輪迴不止。",
        "from": "T17n0722_005:0433c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸智者正定相應，無明業繩不能牽動，譬如藕絲牽妙高山而不能動。",
        "from": "T17n0722_005:0433c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」爾時，彼天聞於天帝說是法已，即說伽他讚天帝曰：",
        "from": "T17n0722_005:0433c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝今說此法，　　息除一切障，",
        "from": "T17n0722_005:0433c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我依天帝語，　　安住無怖畏。",
        "from": "T17n0722_005:0433c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與彼諸群生，　　而作慈悲父，",
        "from": "T17n0722_005:0433c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣示涅槃城，　　令彼得利樂。",
        "from": "T17n0722_005:0433c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法本無分別，　　天帝善能宣，",
        "from": "T17n0722_005:0433c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今遇正教師，　　得至無上道。",
        "from": "T17n0722_005:0433c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，天帝又復白言：",
        "from": "T17n0722_005:0433c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世間財物勿生貪著。",
        "from": "T17n0722_005:0433c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人捨離智慧出生，若復愛著，破壞善根；",
        "from": "T17n0722_005:0433c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七種聖財漸漸隱沒，經百千生沈淪惡道。",
        "from": "T17n0722_005:0433c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復世財而不堅久，水、火、盜賊、王等勢力皆可侵奪；",
        "from": "T17n0722_005:0433c19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼法財，水、火等災終不能壞。",
        "from": "T17n0722_005:0433c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝諸天眾，雖有勢力，諸根具足，身帶光明；",
        "from": "T17n0722_005:0433c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衰相現時生其愁惱，墮下虛空過百千踰繕那，入其惡趣。",
        "from": "T17n0722_005:0433c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，帝釋即說伽他曰：",
        "from": "T17n0722_005:0433c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如汝大快樂，　　富貴不可量，",
        "from": "T17n0722_005:0433c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衰相若現前，　　決定沈惡趣。",
        "from": "T17n0722_005:0433c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如現所作業，　　隨業果復生，",
        "from": "T17n0722_005:0433c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業相善殊勝，　　異熟果亦然。",
        "from": "T17n0722_005:0433c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業有上、中、下，　　善惡品類同，",
        "from": "T17n0722_005:0433c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成彼有報時，　　勝劣亦如是。",
        "from": "T17n0722_005:0433c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等審思惟，　　色力身最上，",
        "from": "T17n0722_005:0434a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅未能逃，　　云何而不墮？",
        "from": "T17n0722_005:0434a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如麥等種，　　而被大火燒，",
        "from": "T17n0722_005:0434a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨燒即破壞，　　云何芽得生？",
        "from": "T17n0722_005:0434a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮虛假偽身，　　四相遷流速，",
        "from": "T17n0722_005:0434a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如燈而生焰，　　不住剎那中。",
        "from": "T17n0722_005:0434a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心相亦復爾，　　虛幻無真實，",
        "from": "T17n0722_005:0434a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒被漏隨增，　　云何得安樂？",
        "from": "T17n0722_005:0434a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄捨於妄境，　　勿自愛其身，",
        "from": "T17n0722_005:0434a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定脫輪迴，　　速至於彼岸。",
        "from": "T17n0722_005:0434a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，彼天有其飛鳥而復說言：",
        "from": "T17n0722_005:0434a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我等今者居烏鉢羅林，於其林間有大浴池，多生紅蓮長時芬馥，鳥身翅翼諸色間雜，狀如七寶；",
        "from": "T17n0722_005:0434a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼有光明，言音妙好，於彼林中長時戲樂。",
        "from": "T17n0722_005:0434a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」觀察天子耽著迷醉，即說伽他曰：",
        "from": "T17n0722_005:0434a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我恒耽憙樂，　　天人愛亦然，",
        "from": "T17n0722_005:0434a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天雖與禽別，　　愛染而無二，",
        "from": "T17n0722_005:0434a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能守行法，　　云何得解脫？",
        "from": "T17n0722_005:0434a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天等若如是，　　飛禽何所別？",
        "from": "T17n0722_005:0434a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今復告汝等，　　勿著五慾樂，",
        "from": "T17n0722_005:0434a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而修勝法行，　　當得大解脫。",
        "from": "T17n0722_005:0434a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生、老、病、死苦，　　永不害其身，",
        "from": "T17n0722_005:0434a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天與禽類身，　　平等獲善利。",
        "from": "T17n0722_005:0434a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，天帝又復白言：",
        "from": "T17n0722_005:0434a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有智者離垢清淨，世間罪染普遍此天，亦不能著。",
        "from": "T17n0722_005:0434a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「何以故？",
        "from": "T17n0722_005:0434a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為彼智者，於生、苦因緣而能解了；",
        "from": "T17n0722_005:0434a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於彼天朋友知識、恩愛眷屬無所戀著。",
        "from": "T17n0722_005:0434a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等諸天癡愚、貪染不離輪迴，與彼飛禽等無有異。",
        "from": "T17n0722_005:0434a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有眾生耽著飲酒，得罪甚多。",
        "from": "T17n0722_005:0434a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何？",
        "from": "T17n0722_005:0434a29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為彼有情，心識迷亂，破犯恒多；",
        "from": "T17n0722_005:0434b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酒力雖消，業報不滅，於五趣中輪迴不絕，於一切罪中最為增上，乃至於俱胝劫，流浪不絕沈淪惡趣，煩惱纏縛——佛所言說。",
        "from": "T17n0722_005:0434b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，彼天帝釋園中有妙法堂，種種珍寶殊妙莊嚴。",
        "from": "T17n0722_005:0434b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時，諸天眾詣彼堂中。",
        "from": "T17n0722_005:0434b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時，帝釋觀察天眾，而說伽他曰：",
        "from": "T17n0722_005:0434b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝等諸天眾，　　過去修微善，",
        "from": "T17n0722_005:0434b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲生天界中；",
        "from": "T17n0722_005:0434b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若天報應盡，定墮於輪迴。",
        "from": "T17n0722_005:0434b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牽引於眾生，　　三界、五趣中，",
        "from": "T17n0722_005:0434b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處處而出生。",
        "from": "T17n0722_005:0434b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審諦細思惟，　　生滅須臾間，",
        "from": "T17n0722_005:0434b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何不省覺？",
        "from": "T17n0722_005:0434b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而依眾律儀，　　堅固七覺支，",
        "from": "T17n0722_005:0434b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤行八聖道，　　善住於五根，",
        "from": "T17n0722_005:0434b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長於五力，　　四念與正勤，",
        "from": "T17n0722_005:0434b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及彼四神足；",
        "from": "T17n0722_005:0434b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如是而不退，必至涅槃城，　　恒受寂滅樂。",
        "from": "T17n0722_005:0434b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙法聖念處經卷第五",
        "from": "T17n0722_005:0434b20_100",
        "context_with_next_sentence": false
    }
]