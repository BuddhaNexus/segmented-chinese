{
    "T51n2067_007:0031b07_0": "弘贊法華傳卷第七",
    "T51n2067_007:0031b09_0": "藍谷沙門慧詳撰",
    "T51n2067_007:0031b10_0": "誦持第六之二",
    "T51n2067_007:0031b11_0": "北齊靈巖寺東林僧",
    "T51n2067_007:0031b12_0": "北齊并州看山掘地得舌",
    "T51n2067_007:0031b13_0": "北齊壽門山頂釋道樹",
    "T51n2067_007:0031b14_0": "北齊釋靈偘(老矩師附)",
    "T51n2067_007:0031b15_0": "陳交州僧都釋法愛",
    "T51n2067_007:0031b16_0": "陳壽春曲水寺釋法慧(華手尼附東闍梨附)隋光祿大夫陳陵妻章氏隋齊州靈巖寺釋僧生隋瑯瑘居士王梵行隋江都縣釋慧向(尼法潤附)隋高邙釋寶通隋江陽永齊寺釋僧映隋清信士陸淳隋淨道寺釋法朗隋禪居道場釋慧斌隋長樂寺釋慧偕隋天台山釋智越隋鄂州神異釋僧朗隋黃州隨化寺釋玄秀隋始與釋慧峙隋楊州長樂寺釋智業隋并州人高守節高齊時有僧。",
    "T51n2067_007:0031b28_1": "失其名。",
    "T51n2067_007:0031b28_2": "在靈巖寺東林。",
    "T51n2067_007:0031b28_3": "誦法華經。",
    "T51n2067_007:0031b29_4": "每精誠懇到。",
    "T51n2067_007:0031b29_5": "中表潔淨。",
    "T51n2067_007:0031b29_6": "焚香禮佛。",
    "T51n2067_007:0031b29_7": "以求證驗。",
    "T51n2067_007:0031c01_8": "初有大蛇及雉鹿等。",
    "T51n2067_007:0031c01_9": "俱來立聽。",
    "T51n2067_007:0031c01_10": "誦訖乃散。",
    "T51n2067_007:0031c02_0": "中時即山神將食。",
    "T51n2067_007:0031c02_1": "自來供養。",
    "T51n2067_007:0031c02_2": "後忽見光明。",
    "T51n2067_007:0031c02_3": "從東山而下。",
    "T51n2067_007:0031c03_4": "有大菩薩。",
    "T51n2067_007:0031c03_5": "乘六牙白象。",
    "T51n2067_007:0031c03_6": "大眾圍繞。",
    "T51n2067_007:0031c04_0": "直至其前。",
    "T51n2067_007:0031c04_1": "僧望光禮拜。",
    "T51n2067_007:0031c04_2": "慶悅深至。",
    "T51n2067_007:0031c04_3": "疑義闕文。",
    "T51n2067_007:0031c05_0": "皆為敷釋。",
    "T51n2067_007:0031c05_1": "餘眾但聞異香。",
    "T51n2067_007:0031c05_2": "經久方隱。",
    "T51n2067_007:0031c06_0": "齊文成世。",
    "T51n2067_007:0031c06_1": "并州東看山側。",
    "T51n2067_007:0031c06_2": "有人堀地。",
    "T51n2067_007:0031c06_3": "得見一處土。",
    "T51n2067_007:0031c07_4": "其色黃白。",
    "T51n2067_007:0031c07_5": "與旁有異。",
    "T51n2067_007:0031c07_6": "尋見一物。",
    "T51n2067_007:0031c07_7": "狀人兩脣。",
    "T51n2067_007:0031c08_8": "其中有舌。",
    "T51n2067_007:0031c08_9": "鮮紅赤色。",
    "T51n2067_007:0031c08_10": "以事聞奏。",
    "T51n2067_007:0031c08_11": "問諸通人。",
    "T51n2067_007:0031c09_12": "無能知者。",
    "T51n2067_007:0031c09_13": "沙門大統法上奏曰。",
    "T51n2067_007:0031c09_14": "此持法華者。",
    "T51n2067_007:0031c10_15": "六根不壞報耳。",
    "T51n2067_007:0031c10_16": "誦滿千遍。",
    "T51n2067_007:0031c10_17": "其微。",
    "T51n2067_007:0031c10_18": "驗乎。",
    "T51n2067_007:0031c10_19": "乃勅中書舍人高珍曰。",
    "T51n2067_007:0031c11_20": "卿是信向之人。",
    "T51n2067_007:0031c11_21": "自往看省。",
    "T51n2067_007:0031c12_22": "必有靈異。",
    "T51n2067_007:0031c12_23": "宜遷置淨所。",
    "T51n2067_007:0031c12_24": "設齋供養。",
    "T51n2067_007:0031c12_25": "珍奉勅至彼。",
    "T51n2067_007:0031c13_26": "集諸持法華沙門。",
    "T51n2067_007:0031c13_27": "執爐潔齋。",
    "T51n2067_007:0031c13_28": "遶旋而祝曰。",
    "T51n2067_007:0031c14_29": "菩薩涅槃。",
    "T51n2067_007:0031c14_30": "年代已遠。",
    "T51n2067_007:0031c14_31": "像法流行。",
    "T51n2067_007:0031c14_32": "奉無謬者。",
    "T51n2067_007:0031c15_33": "請現感應。",
    "T51n2067_007:0031c15_34": "纔始發聲。",
    "T51n2067_007:0031c15_35": "此之脣舌。",
    "T51n2067_007:0031c15_36": "一時鼓動。",
    "T51n2067_007:0031c16_37": "雖無聲響。",
    "T51n2067_007:0031c16_38": "而相似讀誦。",
    "T51n2067_007:0031c16_39": "諸同見者。",
    "T51n2067_007:0031c16_40": "莫不毛竪。",
    "T51n2067_007:0031c17_41": "珍以狀聞。",
    "T51n2067_007:0031c17_42": "詔遣石函藏之。",
    "T51n2067_007:0031c17_43": "遷于塔室(云云)。",
    "T51n2067_007:0031c18_0": "釋道樹。",
    "T51n2067_007:0031c18_1": "壽春石澗人。",
    "T51n2067_007:0031c18_2": "蔬食長齋。",
    "T51n2067_007:0031c18_3": "誦法華一部。",
    "T51n2067_007:0031c19_0": "禪思通徹。",
    "T51n2067_007:0031c19_1": "遠近欽敬。",
    "T51n2067_007:0031c19_2": "住壽門山頂寺。",
    "T51n2067_007:0031c19_3": "時住聚落。",
    "T51n2067_007:0031c20_4": "應赴齊供。",
    "T51n2067_007:0031c20_5": "就他乞衣食者。",
    "T51n2067_007:0031c20_6": "必是為之轉厄。",
    "T51n2067_007:0031c21_0": "將物永去。",
    "T51n2067_007:0031c21_1": "災障轉移。",
    "T51n2067_007:0031c21_2": "退物更還。",
    "T51n2067_007:0031c21_3": "禍即不滅。",
    "T51n2067_007:0031c21_4": "有人姓鄭。",
    "T51n2067_007:0031c22_5": "請樹宿齊。",
    "T51n2067_007:0031c22_6": "誦經始訖。",
    "T51n2067_007:0031c22_7": "端坐思念。",
    "T51n2067_007:0031c22_8": "忽云。",
    "T51n2067_007:0031c23_9": "徵相不好。",
    "T51n2067_007:0031c23_10": "見一棺木。",
    "T51n2067_007:0031c23_11": "破某處入。",
    "T51n2067_007:0031c23_12": "從某處生。",
    "T51n2067_007:0031c24_13": "於是。",
    "T51n2067_007:0031c24_14": "合家次第來問。",
    "T51n2067_007:0031c24_15": "並云非也。",
    "T51n2067_007:0031c24_16": "至少新婦曰。",
    "T51n2067_007:0031c25_17": "或是汝耶。",
    "T51n2067_007:0031c25_18": "宜好用心。",
    "T51n2067_007:0031c25_19": "少時。",
    "T51n2067_007:0031c25_20": "此婦因產而卒。",
    "T51n2067_007:0031c26_21": "又一時。",
    "T51n2067_007:0031c26_22": "諸尼在鄭寺。",
    "T51n2067_007:0031c26_23": "共學經聲。",
    "T51n2067_007:0031c26_24": "樹來觀。",
    "T51n2067_007:0031c27_0": "歷到一沙彌尼。",
    "T51n2067_007:0031c27_1": "斂眉語曰。",
    "T51n2067_007:0031c27_2": "爾須懺悔。",
    "T51n2067_007:0031c27_3": "更二年嬰百牛疾。",
    "T51n2067_007:0031c28_4": "乞活道路。",
    "T51n2067_007:0031c28_5": "果如其言。",
    "T51n2067_007:0031c28_6": "預記多驗。",
    "T51n2067_007:0031c28_7": "年九十餘卒。",
    "T51n2067_007:0031c29_8": "即天保中也。",
    "T51n2067_007:0032a01_0": "釋靈偘。",
    "T51n2067_007:0032a01_1": "未詳何人。",
    "T51n2067_007:0032a01_2": "識見聰敏。",
    "T51n2067_007:0032a01_3": "每誦法華。",
    "T51n2067_007:0032a01_4": "初誦經竟。",
    "T51n2067_007:0032a02_5": "便感惡疾。",
    "T51n2067_007:0032a02_6": "即訴其師云。",
    "T51n2067_007:0032a02_7": "偘聞。",
    "T51n2067_007:0032a02_8": "受持法華。",
    "T51n2067_007:0032a03_9": "得六根清淨。",
    "T51n2067_007:0032a03_10": "云何偘誦。",
    "T51n2067_007:0032a03_11": "乃感斯疾。",
    "T51n2067_007:0032a03_12": "其師云。",
    "T51n2067_007:0032a04_13": "汝誦經時。",
    "T51n2067_007:0032a04_14": "作若為方法。",
    "T51n2067_007:0032a04_15": "答云。",
    "T51n2067_007:0032a04_16": "誦時。",
    "T51n2067_007:0032a04_17": "或不洗手。",
    "T51n2067_007:0032a05_18": "或復袒。",
    "T51n2067_007:0032a05_19": "乍安脚後。",
    "T51n2067_007:0032a05_20": "乍置床頭耳。",
    "T51n2067_007:0032a05_21": "師云。",
    "T51n2067_007:0032a06_0": "此是護法善神。",
    "T51n2067_007:0032a06_1": "讁罰汝也。",
    "T51n2067_007:0032a06_2": "非關經無感德。",
    "T51n2067_007:0032a06_3": "汝可懺悔。",
    "T51n2067_007:0032a07_4": "於是。",
    "T51n2067_007:0032a07_5": "作素木函。",
    "T51n2067_007:0032a07_6": "盛經頂載。",
    "T51n2067_007:0032a07_7": "在殿內行道。",
    "T51n2067_007:0032a08_8": "除大小便及以食飲。",
    "T51n2067_007:0032a08_9": "專自苦到。",
    "T51n2067_007:0032a08_10": "乃至頭破血流。",
    "T51n2067_007:0032a09_11": "自咎自責。",
    "T51n2067_007:0032a09_12": "如是經歷三年。",
    "T51n2067_007:0032a09_13": "於五更向曉。",
    "T51n2067_007:0032a10_0": "有人叩佛殿戶。",
    "T51n2067_007:0032a10_1": "喚令便開。",
    "T51n2067_007:0032a10_2": "偘初不肯云。",
    "T51n2067_007:0032a10_3": "其是罪人。",
    "T51n2067_007:0032a11_4": "何處有閑傭相與開門。",
    "T51n2067_007:0032a11_5": "喚之不已。",
    "T51n2067_007:0032a11_6": "遂為開之。",
    "T51n2067_007:0032a12_7": "見一老公。",
    "T51n2067_007:0032a12_8": "鬚鬢皓白。",
    "T51n2067_007:0032a12_9": "手捉一杖。",
    "T51n2067_007:0032a12_10": "即連打偘云。",
    "T51n2067_007:0032a13_11": "汝從今去。",
    "T51n2067_007:0032a13_12": "更敢輕慢法華經耶。",
    "T51n2067_007:0032a13_13": "應打之時。",
    "T51n2067_007:0032a14_14": "身瘡除愈。",
    "T51n2067_007:0032a14_15": "四大平復。",
    "T51n2067_007:0032a14_16": "天明視殿前。",
    "T51n2067_007:0032a14_17": "見有象跡。",
    "T51n2067_007:0032a15_18": "始知此老公是普賢菩薩。",
    "T51n2067_007:0032a15_19": "來降滅罪也。",
    "T51n2067_007:0032a16_0": "自爾。",
    "T51n2067_007:0032a16_1": "改懺悛革。",
    "T51n2067_007:0032a16_2": "精勤習誦。",
    "T51n2067_007:0032a16_3": "後不知所終。",
    "T51n2067_007:0032a16_4": "又老矩師。",
    "T51n2067_007:0032a17_5": "亦以法華為業。",
    "T51n2067_007:0032a17_6": "誦持。",
    "T51n2067_007:0032a17_7": "即覺口中別有甘味。",
    "T51n2067_007:0032a18_8": "非世所有。",
    "T51n2067_007:0032a18_9": "故誦之。",
    "T51n2067_007:0032a18_10": "不欲息也。",
    "T51n2067_007:0032a19_0": "釋法愛。",
    "T51n2067_007:0032a19_1": "長沙人也。",
    "T51n2067_007:0032a19_2": "少而出家。",
    "T51n2067_007:0032a19_3": "不能蔬節苦行。",
    "T51n2067_007:0032a20_0": "誦法華經甚通利。",
    "T51n2067_007:0032a20_1": "兼聽三論。",
    "T51n2067_007:0032a20_2": "隋陽晉征交阯。",
    "T51n2067_007:0032a21_0": "值交人反亂。",
    "T51n2067_007:0032a21_1": "愛隨例藏避。",
    "T51n2067_007:0032a21_2": "忽為五賊所得。",
    "T51n2067_007:0032a21_3": "置在一處。",
    "T51n2067_007:0032a22_4": "口云。",
    "T51n2067_007:0032a22_5": "待我食竟。",
    "T51n2067_007:0032a22_6": "殺却道人。",
    "T51n2067_007:0032a22_7": "愛乃見壁邊有一槊子。",
    "T51n2067_007:0032a23_8": "挾將出外。",
    "T51n2067_007:0032a23_9": "向北直走。",
    "T51n2067_007:0032a23_10": "值一大樹。",
    "T51n2067_007:0032a24_0": "隱立樹邊。",
    "T51n2067_007:0032a24_1": "賊食竟起。",
    "T51n2067_007:0032a24_2": "遂遙似見愛。",
    "T51n2067_007:0032a24_3": "竟往趣之。",
    "T51n2067_007:0032a25_4": "近便不覩。",
    "T51n2067_007:0032a25_5": "自相謂曰。",
    "T51n2067_007:0032a25_6": "向者遙見道人。",
    "T51n2067_007:0032a25_7": "比至不見。",
    "T51n2067_007:0032a26_8": "當是去竟。",
    "T51n2067_007:0032a26_9": "愛一心捉槊不敢動。",
    "T51n2067_007:0032a26_10": "賊迴首遠相望。",
    "T51n2067_007:0032a27_11": "如有所矚。",
    "T51n2067_007:0032a27_12": "忽云。",
    "T51n2067_007:0032a27_13": "道人已去。",
    "T51n2067_007:0032a27_14": "宜共逐之。",
    "T51n2067_007:0032a28_0": "遂奔馳竟往。",
    "T51n2067_007:0032a28_1": "愛。",
    "T51n2067_007:0032a28_2": "於是向北走。",
    "T51n2067_007:0032a28_3": "到一棘林。",
    "T51n2067_007:0032a28_4": "即投中隱避。",
    "T51n2067_007:0032a29_5": "乃遇兩虎相抱而臥。",
    "T51n2067_007:0032a29_6": "虎見愛來。",
    "T51n2067_007:0032a29_7": "並舉頭看愛。",
    "T51n2067_007:0032b01_8": "愛轉惶懼。",
    "T51n2067_007:0032b01_9": "口云。",
    "T51n2067_007:0032b01_10": "二檀越。",
    "T51n2067_007:0032b01_11": "貧道被賊逐。",
    "T51n2067_007:0032b02_12": "急投檀越。",
    "T51n2067_007:0032b02_13": "願時將接救護。",
    "T51n2067_007:0032b02_14": "二虎即出外。",
    "T51n2067_007:0032b02_15": "奮迅驚吼。",
    "T51n2067_007:0032b03_16": "賊便退散。",
    "T51n2067_007:0032b03_17": "愛又北走。",
    "T51n2067_007:0032b03_18": "虎隨追之。",
    "T51n2067_007:0032b03_19": "到一水邊見人。",
    "T51n2067_007:0032b04_20": "持數片飲食授與愛。",
    "T51n2067_007:0032b04_21": "愛受而食之。",
    "T51n2067_007:0032b05_22": "乃是煎膏粄也。",
    "T51n2067_007:0032b05_23": "氣味甚美。",
    "T51n2067_007:0032b05_24": "即便渡水上洲。",
    "T51n2067_007:0032b06_0": "虎亦捨去。",
    "T51n2067_007:0032b06_1": "仍宿洲上。",
    "T51n2067_007:0032b06_2": "又遇二人。",
    "T51n2067_007:0032b06_3": "亦同在宿。",
    "T51n2067_007:0032b06_4": "大設異味。",
    "T51n2067_007:0032b07_5": "至曉方別。",
    "T51n2067_007:0032b07_6": "仍又囑云。",
    "T51n2067_007:0032b07_7": "但北向行。",
    "T51n2067_007:0032b07_8": "自當得脫。",
    "T51n2067_007:0032b08_9": "於是北出三十餘里。",
    "T51n2067_007:0032b08_10": "乃逢知舊。",
    "T51n2067_007:0032b08_11": "亦同避賊。",
    "T51n2067_007:0032b09_12": "相見歡喜。",
    "T51n2067_007:0032b09_13": "始得免脫。",
    "T51n2067_007:0032b09_14": "愛後向道俗說之。",
    "T51n2067_007:0032b09_15": "不知所終。",
    "T51n2067_007:0032b11_0": "釋法慧。",
    "T51n2067_007:0032b11_1": "未詳氏族。",
    "T51n2067_007:0032b11_2": "出家住壽春曲水寺。",
    "T51n2067_007:0032b11_3": "蔬食長齊。",
    "T51n2067_007:0032b12_4": "不受嚫施。",
    "T51n2067_007:0032b12_5": "無貪無瞋。",
    "T51n2067_007:0032b12_6": "心行調善。",
    "T51n2067_007:0032b12_7": "布衣獘衲。",
    "T51n2067_007:0032b13_8": "不居房室止有繩床。",
    "T51n2067_007:0032b13_9": "在步廊下。",
    "T51n2067_007:0032b13_10": "誦法華經一部。",
    "T51n2067_007:0032b14_11": "誦時。",
    "T51n2067_007:0032b14_12": "口必有密光。",
    "T51n2067_007:0032b14_13": "看者。",
    "T51n2067_007:0032b14_14": "皆見照於檐宇。",
    "T51n2067_007:0032b15_15": "年七十五而終。",
    "T51n2067_007:0032b15_16": "即陳宣時也。",
    "T51n2067_007:0032b15_17": "又高[邱-丘+王]縣比丘尼花手。",
    "T51n2067_007:0032b16_18": "誦法華經。",
    "T51n2067_007:0032b16_19": "適通第一。",
    "T51n2067_007:0032b16_20": "右手爪上即生一花。",
    "T51n2067_007:0032b17_21": "形如蔆菜。",
    "T51n2067_007:0032b17_22": "如是誦五卷。",
    "T51n2067_007:0032b17_23": "五指爪上。",
    "T51n2067_007:0032b18_24": "生於五花。",
    "T51n2067_007:0032b18_25": "次誦第六第七。",
    "T51n2067_007:0032b18_26": "掌內又生二花。",
    "T51n2067_007:0032b19_27": "形大於前。",
    "T51n2067_007:0032b19_28": "州境因呼為花手尼。",
    "T51n2067_007:0032b19_29": "尼亦無甚苦節。",
    "T51n2067_007:0032b20_30": "陳武帝。",
    "T51n2067_007:0032b20_31": "召見看之。",
    "T51n2067_007:0032b20_32": "後不知所終。",
    "T51n2067_007:0032b20_33": "又長干寺東闍梨者。",
    "T51n2067_007:0032b21_34": "誦法華經。",
    "T51n2067_007:0032b21_35": "甚有節行。",
    "T51n2067_007:0032b21_36": "每有所誦。",
    "T51n2067_007:0032b22_37": "瓶水。",
    "T51n2067_007:0032b22_38": "夏冷冬溫。",
    "T51n2067_007:0032b22_39": "略為常候。",
    "T51n2067_007:0032b23_0": "清信女章氏。",
    "T51n2067_007:0032b23_1": "隋右光祿大夫陳陵妻也。",
    "T51n2067_007:0032b23_2": "誦法華經。",
    "T51n2067_007:0032b24_3": "每悔四體羸乏。",
    "T51n2067_007:0032b24_4": "不堪久誦。",
    "T51n2067_007:0032b24_5": "忽夢僧。",
    "T51n2067_007:0032b24_6": "持一椀藥作黃色。",
    "T51n2067_007:0032b25_7": "來在章前。",
    "T51n2067_007:0032b25_8": "與之令服。",
    "T51n2067_007:0032b25_9": "已經少時。",
    "T51n2067_007:0032b26_0": "因腹痛驚覺。",
    "T51n2067_007:0032b26_1": "腹痛既甚。",
    "T51n2067_007:0032b26_2": "即使喚陵尋至。",
    "T51n2067_007:0032b26_3": "章云。",
    "T51n2067_007:0032b27_0": "世人道。",
    "T51n2067_007:0032b27_1": "若夢見道人。",
    "T51n2067_007:0032b27_2": "多是鬼。",
    "T51n2067_007:0032b27_3": "今夜忽夢服道人藥。",
    "T51n2067_007:0032b28_4": "即是服鬼藥。",
    "T51n2067_007:0032b28_5": "決死不疑。",
    "T51n2067_007:0032b28_6": "語頃乃令陵避。",
    "T51n2067_007:0032b29_0": "須臾下痢。",
    "T51n2067_007:0032b29_1": "純作薰色。",
    "T51n2067_007:0032b29_2": "似夢所見。",
    "T51n2067_007:0032b29_3": "痢竟。",
    "T51n2067_007:0032b29_4": "所患都差。",
    "T51n2067_007:0032b30_5": "自後四體休健。",
    "T51n2067_007:0032b30_6": "常能讀誦。",
    "T51n2067_007:0032b30_7": "日夜一遍。",
    "T51n2067_007:0032b30_8": "無復困極也。",
    "T51n2067_007:0032c02_0": "釋僧生。",
    "T51n2067_007:0032c02_1": "不知氏族。",
    "T51n2067_007:0032c02_2": "或云。",
    "T51n2067_007:0032c02_3": "衛州人。",
    "T51n2067_007:0032c02_4": "以開皇六年。",
    "T51n2067_007:0032c03_5": "至齊州界。",
    "T51n2067_007:0032c03_6": "其人。",
    "T51n2067_007:0032c03_7": "室無定所。",
    "T51n2067_007:0032c03_8": "但有伽藍之地。",
    "T51n2067_007:0032c04_9": "不問有僧無僧。",
    "T51n2067_007:0032c04_10": "仍於中住。",
    "T51n2067_007:0032c04_11": "乞食誦經。",
    "T51n2067_007:0032c04_12": "限滿千遍。",
    "T51n2067_007:0032c05_13": "然後一移。",
    "T51n2067_007:0032c05_14": "其年。",
    "T51n2067_007:0032c05_15": "至靈巖寶山道場。",
    "T51n2067_007:0032c05_16": "於蘭若中。",
    "T51n2067_007:0032c06_17": "住誦經。",
    "T51n2067_007:0032c06_18": "爾夜。",
    "T51n2067_007:0032c06_19": "山神將數十人來聽。",
    "T51n2067_007:0032c06_20": "生問曰。",
    "T51n2067_007:0032c07_21": "檀越何神。",
    "T51n2067_007:0032c07_22": "答云。",
    "T51n2067_007:0032c07_23": "弟子。",
    "T51n2067_007:0032c07_24": "是北山神。",
    "T51n2067_007:0032c07_25": "住此已來七百餘年。",
    "T51n2067_007:0032c08_26": "今聞法師誦經。",
    "T51n2067_007:0032c08_27": "故來聽之。",
    "T51n2067_007:0032c08_28": "屈師為誦。",
    "T51n2067_007:0032c09_29": "良久乃去。",
    "T51n2067_007:0032c09_30": "自後常爾。",
    "T51n2067_007:0032c09_31": "生於後出往相州。",
    "T51n2067_007:0032c10_0": "建造經藏。",
    "T51n2067_007:0032c10_1": "旬月而成。",
    "T51n2067_007:0032c10_2": "意欲於眼中燃燈供養。",
    "T51n2067_007:0032c11_0": "而不能得出眼精人。",
    "T51n2067_007:0032c11_1": "於是。",
    "T51n2067_007:0032c11_2": "營得一刀子長五六寸。",
    "T51n2067_007:0032c12_3": "并錢一貫。",
    "T51n2067_007:0032c12_4": "入山覓獵師。",
    "T51n2067_007:0032c12_5": "師云。",
    "T51n2067_007:0032c12_6": "不用師錢。",
    "T51n2067_007:0032c13_7": "但與弟子刀子。",
    "T51n2067_007:0032c13_8": "獵師即為出眼竟。",
    "T51n2067_007:0032c13_9": "身青瘀。",
    "T51n2067_007:0032c14_0": "然後乃穌。",
    "T51n2067_007:0032c14_1": "穌竟。",
    "T51n2067_007:0032c14_2": "語獵師云。",
    "T51n2067_007:0032c14_3": "可以火熟。",
    "T51n2067_007:0032c14_4": "此瘡。",
    "T51n2067_007:0032c15_0": "獵師以火熟之。",
    "T51n2067_007:0032c15_1": "然後還相州法藏寺。",
    "T51n2067_007:0032c15_2": "燃燈供養。",
    "T51n2067_007:0032c16_3": "誦經不息。",
    "T51n2067_007:0032c16_4": "若欲析請舍利。",
    "T51n2067_007:0032c16_5": "暫爾斂心。",
    "T51n2067_007:0032c16_6": "即降三五。",
    "T51n2067_007:0032c17_7": "或時。",
    "T51n2067_007:0032c17_8": "七日伏念。",
    "T51n2067_007:0032c17_9": "便盈百數。",
    "T51n2067_007:0032c17_10": "近遠道俗。",
    "T51n2067_007:0032c18_11": "深敬慕之。",
    "T51n2067_007:0032c18_12": "開皇七年卒矣。",
    "T51n2067_007:0032c19_0": "清信士王。",
    "T51n2067_007:0032c19_1": "梵行。",
    "T51n2067_007:0032c19_2": "瑯瑘臨沂人。",
    "T51n2067_007:0032c19_3": "小失兩眼。",
    "T51n2067_007:0032c19_4": "其母慈念。",
    "T51n2067_007:0032c20_5": "口授法華。",
    "T51n2067_007:0032c20_6": "至年十三。",
    "T51n2067_007:0032c20_7": "一部通利。",
    "T51n2067_007:0032c20_8": "仍晝夜誦習。",
    "T51n2067_007:0032c21_9": "憑心專到。",
    "T51n2067_007:0032c21_10": "誦得一萬七千遍。",
    "T51n2067_007:0032c21_11": "雖目無覩。",
    "T51n2067_007:0032c22_0": "而行來不須前導。",
    "T51n2067_007:0032c22_1": "自識坑坎。",
    "T51n2067_007:0032c22_2": "能織席簞。",
    "T51n2067_007:0032c22_3": "縫衣書疏。",
    "T51n2067_007:0032c23_4": "勝有眼人。",
    "T51n2067_007:0032c23_5": "人咸疑其別有所得。",
    "T51n2067_007:0032c23_6": "蔬食持齊。",
    "T51n2067_007:0032c24_7": "永無妻娶。",
    "T51n2067_007:0032c24_8": "年七十一。",
    "T51n2067_007:0032c24_9": "開皇六年終。",
    "T51n2067_007:0032c24_10": "屍陀草野。",
    "T51n2067_007:0032c25_11": "鳥獸不敢近。",
    "T51n2067_007:0032c25_12": "肉既消盡。",
    "T51n2067_007:0032c25_13": "唯餘白骨。",
    "T51n2067_007:0032c25_14": "舌方出口。",
    "T51n2067_007:0032c26_15": "長一尺餘。",
    "T51n2067_007:0032c26_16": "色如蓮花。",
    "T51n2067_007:0032c26_17": "其弟慧義。",
    "T51n2067_007:0032c26_18": "以塼函盛之。",
    "T51n2067_007:0032c27_19": "久而不爛。",
    "T51n2067_007:0032c28_0": "釋慧向。",
    "T51n2067_007:0032c28_1": "俗姓劉氏。",
    "T51n2067_007:0032c28_2": "彭城人。",
    "T51n2067_007:0032c28_3": "甚有道素。",
    "T51n2067_007:0032c28_4": "眾所知識。",
    "T51n2067_007:0032c29_5": "省事務。",
    "T51n2067_007:0032c29_6": "唯誦法華。",
    "T51n2067_007:0032c29_7": "來到江都縣。",
    "T51n2067_007:0032c29_8": "寄故亭村住。",
    "T51n2067_007:0033a01_9": "年一百二歲。",
    "T51n2067_007:0033a01_10": "初無疾病。",
    "T51n2067_007:0033a01_11": "而忽云。",
    "T51n2067_007:0033a01_12": "貧道當行。",
    "T51n2067_007:0033a02_13": "與檀越別。",
    "T51n2067_007:0033a02_14": "於是端坐而終。",
    "T51n2067_007:0033a02_15": "村人輿出林間。",
    "T51n2067_007:0033a03_0": "未敢埋殯。",
    "T51n2067_007:0033a03_1": "經一七日。",
    "T51n2067_007:0033a03_2": "其屍忽自仰臥。",
    "T51n2067_007:0033a03_3": "初申後屈已合掌。",
    "T51n2067_007:0033a04_4": "了不爛壞。",
    "T51n2067_007:0033a04_5": "轉久但乾辟而已。",
    "T51n2067_007:0033a04_6": "村人埋之於銅山之側。",
    "T51n2067_007:0033a05_7": "採樵人。",
    "T51n2067_007:0033a05_8": "時有聞誦經聲。",
    "T51n2067_007:0033a05_9": "不知的。",
    "T51n2067_007:0033a06_10": "在何處。",
    "T51n2067_007:0033a06_11": "揚州總管府司馬趙元恪。",
    "T51n2067_007:0033a06_12": "因公行次。",
    "T51n2067_007:0033a07_13": "從向墓傍過。",
    "T51n2067_007:0033a07_14": "見一莖蓮華。",
    "T51n2067_007:0033a07_15": "生於陸地。",
    "T51n2067_007:0033a07_16": "怪而訪之。",
    "T51n2067_007:0033a08_17": "村人云。",
    "T51n2067_007:0033a08_18": "是慧向師之塚。",
    "T51n2067_007:0033a08_19": "此僧生存。",
    "T51n2067_007:0033a08_20": "誦法華經。",
    "T51n2067_007:0033a09_21": "或當是其所致。",
    "T51n2067_007:0033a09_22": "乃堀而視之。",
    "T51n2067_007:0033a09_23": "唯白骨口中。",
    "T51n2067_007:0033a10_24": "其舌如舊。",
    "T51n2067_007:0033a10_25": "紅赤柔軟。",
    "T51n2067_007:0033a10_26": "都不變壞。",
    "T51n2067_007:0033a10_27": "從此舌根。",
    "T51n2067_007:0033a11_28": "生此蓮花。",
    "T51n2067_007:0033a11_29": "因遂聞奏。",
    "T51n2067_007:0033a11_30": "表其靈異。",
    "T51n2067_007:0033a11_31": "又起七層塼塔。",
    "T51n2067_007:0033a12_32": "塔今見在。",
    "T51n2067_007:0033a12_33": "又比丘尼法潤。",
    "T51n2067_007:0033a12_34": "姓陳。",
    "T51n2067_007:0033a12_35": "丹陽人也。",
    "T51n2067_007:0033a13_36": "住三昧寺。",
    "T51n2067_007:0033a13_37": "誦法華經。",
    "T51n2067_007:0033a13_38": "甚有道行。",
    "T51n2067_007:0033a13_39": "死後。",
    "T51n2067_007:0033a14_0": "屍陀林野。",
    "T51n2067_007:0033a14_1": "以施蟲獸。",
    "T51n2067_007:0033a14_2": "經停百許日。",
    "T51n2067_007:0033a14_3": "蟲鳥噉食都盡。",
    "T51n2067_007:0033a15_4": "唯舌與心。",
    "T51n2067_007:0033a15_5": "宛然俱存。",
    "T51n2067_007:0033a15_6": "舌猶赤色。",
    "T51n2067_007:0033a15_7": "而心稍如黑耳。",
    "T51n2067_007:0033a16_8": "其緣家子弟。",
    "T51n2067_007:0033a16_9": "乃收葬起塔。",
    "T51n2067_007:0033a17_0": "釋寶通。",
    "T51n2067_007:0033a17_1": "不知氏族。",
    "T51n2067_007:0033a17_2": "高[邱-丘+王]人。",
    "T51n2067_007:0033a17_3": "無餘知解。",
    "T51n2067_007:0033a17_4": "唯誦法華經第七卷呪數篇耳。",
    "T51n2067_007:0033a18_5": "而忽自見鬼物。",
    "T51n2067_007:0033a18_6": "有楊橋村趙家婦。",
    "T51n2067_007:0033a19_7": "為村神所魅。",
    "T51n2067_007:0033a19_8": "通當過到神舍。",
    "T51n2067_007:0033a19_9": "神乃起迎請座。",
    "T51n2067_007:0033a20_10": "通謂神曰。",
    "T51n2067_007:0033a20_11": "居近人村。",
    "T51n2067_007:0033a20_12": "應為作益。",
    "T51n2067_007:0033a21_0": "何仍魅他婦耶。",
    "T51n2067_007:0033a21_1": "神曰。",
    "T51n2067_007:0033a21_2": "非弟子咎。",
    "T51n2067_007:0033a21_3": "此是群下耳。",
    "T51n2067_007:0033a22_4": "當為治之。",
    "T51n2067_007:0033a22_5": "即遣小吏。",
    "T51n2067_007:0033a22_6": "喚得魅神來到庭前。",
    "T51n2067_007:0033a23_0": "罰之一百流血。",
    "T51n2067_007:0033a23_1": "趙婦因是得差。",
    "T51n2067_007:0033a23_2": "又問神曰。",
    "T51n2067_007:0033a23_3": "彼白露村神。",
    "T51n2067_007:0033a24_4": "與此相關不。",
    "T51n2067_007:0033a24_5": "神曰。",
    "T51n2067_007:0033a24_6": "亦相關耳。",
    "T51n2067_007:0033a24_7": "通曰。",
    "T51n2067_007:0033a25_8": "彼村有郝家婦。",
    "T51n2067_007:0033a25_9": "為彼村神所魅。",
    "T51n2067_007:0033a25_10": "能令差不。",
    "T51n2067_007:0033a26_0": "神曰。",
    "T51n2067_007:0033a26_1": "可得。",
    "T51n2067_007:0033a26_2": "即遣喚彼白露村神。",
    "T51n2067_007:0033a26_3": "亦罰一百。",
    "T51n2067_007:0033a27_0": "郝家婦尋差。",
    "T51n2067_007:0033a27_1": "於後。",
    "T51n2067_007:0033a27_2": "趙氏妻。",
    "T51n2067_007:0033a27_3": "舊疾還發。",
    "T51n2067_007:0033a27_4": "歌吟竟日。",
    "T51n2067_007:0033a28_5": "主人告通。",
    "T51n2067_007:0033a28_6": "通此往。",
    "T51n2067_007:0033a28_7": "即見前得罰之神。",
    "T51n2067_007:0033a28_8": "在病人傍。",
    "T51n2067_007:0033a29_9": "通語曰。",
    "T51n2067_007:0033a29_10": "前言永去。",
    "T51n2067_007:0033a29_11": "今那得來。",
    "T51n2067_007:0033a29_12": "吾當誦呪。",
    "T51n2067_007:0033b01_13": "神乃叩頭。",
    "T51n2067_007:0033b01_14": "求哀乞得歸。",
    "T51n2067_007:0033b01_15": "不煩呪也。",
    "T51n2067_007:0033b01_16": "神於是遙去。",
    "T51n2067_007:0033b02_17": "因爾永差。",
    "T51n2067_007:0033b03_0": "釋僧映。",
    "T51n2067_007:0033b03_1": "未詳氏族居貫也。",
    "T51n2067_007:0033b03_2": "少出家。",
    "T51n2067_007:0033b03_3": "住江陽永齊寺。",
    "T51n2067_007:0033b04_4": "誦法華經。",
    "T51n2067_007:0033b04_5": "至于年老。",
    "T51n2067_007:0033b04_6": "誦習無輟。",
    "T51n2067_007:0033b04_7": "與一法師竝房。",
    "T51n2067_007:0033b05_8": "法師意常嫌誦經聲高。",
    "T51n2067_007:0033b05_9": "妨癈看讀。",
    "T51n2067_007:0033b06_0": "請騫師諫之。",
    "T51n2067_007:0033b06_1": "爾日初夜月朗。",
    "T51n2067_007:0033b06_2": "僧映依常誦經。",
    "T51n2067_007:0033b07_0": "騫師欲往諫止。",
    "T51n2067_007:0033b07_1": "開戶望見。",
    "T51n2067_007:0033b07_2": "映房前。",
    "T51n2067_007:0033b07_3": "有數千人。",
    "T51n2067_007:0033b08_0": "身著鉀鎧。",
    "T51n2067_007:0033b08_1": "持弓帶仗。",
    "T51n2067_007:0033b08_2": "叉手胡跪。",
    "T51n2067_007:0033b08_3": "以聽誦經。",
    "T51n2067_007:0033b09_0": "騫師即退歸房。",
    "T51n2067_007:0033b09_1": "明日備向此法師。",
    "T51n2067_007:0033b09_2": "述昨宵所見。",
    "T51n2067_007:0033b10_3": "共往懺悔嫌怪之罪。",
    "T51n2067_007:0033b10_4": "映。",
    "T51n2067_007:0033b10_5": "若凡常行往。",
    "T51n2067_007:0033b10_6": "恒聞前後似有鉀仗之聲。",
    "T51n2067_007:0033b11_7": "開皇年中。",
    "T51n2067_007:0033b11_8": "卒於寺矣。",
    "T51n2067_007:0033b12_0": "清信士陸淳。",
    "T51n2067_007:0033b12_1": "吳人也。",
    "T51n2067_007:0033b12_2": "誦法華經一部。",
    "T51n2067_007:0033b12_3": "蔬食長齊。",
    "T51n2067_007:0033b13_4": "以大業二年五月。",
    "T51n2067_007:0033b13_5": "染患甚篤。",
    "T51n2067_007:0033b13_6": "經十餘日。",
    "T51n2067_007:0033b13_7": "於後四日四夜。",
    "T51n2067_007:0033b14_8": "仰臥看屋。",
    "T51n2067_007:0033b14_9": "了不暫眴。",
    "T51n2067_007:0033b14_10": "有知識叡師。",
    "T51n2067_007:0033b15_11": "因來看疾。",
    "T51n2067_007:0033b15_12": "問。",
    "T51n2067_007:0033b15_13": "何所覩耶。",
    "T51n2067_007:0033b15_14": "其答云。",
    "T51n2067_007:0033b15_15": "佛記淳當生炎摩天。",
    "T51n2067_007:0033b16_16": "今見彼天宮堂殿。",
    "T51n2067_007:0033b16_17": "林木城闕。",
    "T51n2067_007:0033b16_18": "諸天徒眾。",
    "T51n2067_007:0033b17_19": "看之致樂。",
    "T51n2067_007:0033b17_20": "不覺倦也。",
    "T51n2067_007:0033b17_21": "過四日。",
    "T51n2067_007:0033b17_22": "身亡。",
    "T51n2067_007:0033b18_0": "釋法朗。",
    "T51n2067_007:0033b18_1": "俗姓張。",
    "T51n2067_007:0033b18_2": "河北武城人也。",
    "T51n2067_007:0033b18_3": "幼而出家。",
    "T51n2067_007:0033b18_4": "唯修練行。",
    "T51n2067_007:0033b19_5": "住彭城郡南山淨道寺。",
    "T51n2067_007:0033b19_6": "為沙彌時。",
    "T51n2067_007:0033b19_7": "誦法華經。",
    "T51n2067_007:0033b20_8": "自少至老。",
    "T51n2067_007:0033b20_9": "誦習無懈。",
    "T51n2067_007:0033b20_10": "至年五十三。",
    "T51n2067_007:0033b20_11": "開皇十三年死。",
    "T51n2067_007:0033b21_12": "得七日。",
    "T51n2067_007:0033b21_13": "見閻羅王。",
    "T51n2067_007:0033b21_14": "王前有六道人。",
    "T51n2067_007:0033b22_0": "王問初一僧。",
    "T51n2067_007:0033b22_1": "有何德業。",
    "T51n2067_007:0033b22_2": "初人答。",
    "T51n2067_007:0033b22_3": "誦維摩經。",
    "T51n2067_007:0033b22_4": "王曰。",
    "T51n2067_007:0033b23_5": "度南邊立。",
    "T51n2067_007:0033b23_6": "問第二僧。",
    "T51n2067_007:0033b23_7": "有何德行。",
    "T51n2067_007:0033b23_8": "答。",
    "T51n2067_007:0033b23_9": "誦涅槃經十卷。",
    "T51n2067_007:0033b24_10": "王曰。",
    "T51n2067_007:0033b24_11": "亦南邊立。",
    "T51n2067_007:0033b24_12": "問第三僧。",
    "T51n2067_007:0033b24_13": "有何德業。",
    "T51n2067_007:0033b25_0": "答。",
    "T51n2067_007:0033b25_1": "誦金光明經。",
    "T51n2067_007:0033b25_2": "王曰。",
    "T51n2067_007:0033b25_3": "亦南邊立。",
    "T51n2067_007:0033b25_4": "問第四僧。",
    "T51n2067_007:0033b26_0": "有何行業。",
    "T51n2067_007:0033b26_1": "答。",
    "T51n2067_007:0033b26_2": "講涅槃經。",
    "T51n2067_007:0033b26_3": "王曰。",
    "T51n2067_007:0033b26_4": "度西行立。",
    "T51n2067_007:0033b26_5": "問第五僧。",
    "T51n2067_007:0033b27_6": "有何德行。",
    "T51n2067_007:0033b27_7": "答。",
    "T51n2067_007:0033b27_8": "講十地論。",
    "T51n2067_007:0033b27_9": "王斂眉而言曰。",
    "T51n2067_007:0033b28_10": "度北行立。",
    "T51n2067_007:0033b28_11": "第六問法朗云。",
    "T51n2067_007:0033b28_12": "有何行業。",
    "T51n2067_007:0033b28_13": "答。",
    "T51n2067_007:0033b29_0": "誦法華經。",
    "T51n2067_007:0033b29_1": "王曰。",
    "T51n2067_007:0033b29_2": "度東行立。",
    "T51n2067_007:0033b29_3": "問六僧竟。",
    "T51n2067_007:0033b29_4": "遣人。",
    "T51n2067_007:0033c01_0": "領北行立者。",
    "T51n2067_007:0033c01_1": "向地獄道。",
    "T51n2067_007:0033c01_2": "領西行立者。",
    "T51n2067_007:0033c01_3": "向畜生道。",
    "T51n2067_007:0033c02_4": "領南行三僧。",
    "T51n2067_007:0033c02_5": "向人道。",
    "T51n2067_007:0033c02_6": "語向三道者云。",
    "T51n2067_007:0033c02_7": "去不得歸。",
    "T51n2067_007:0033c03_8": "次語法朗。",
    "T51n2067_007:0033c03_9": "領往天道。",
    "T51n2067_007:0033c03_10": "令見其生處。",
    "T51n2067_007:0033c03_11": "可放還家。",
    "T51n2067_007:0033c04_12": "賜壽八十五歲。",
    "T51n2067_007:0033c04_13": "朗後天宮還。",
    "T51n2067_007:0033c04_14": "忽然而活。",
    "T51n2067_007:0033c05_15": "看左臂上。",
    "T51n2067_007:0033c05_16": "隱隱有赤字。",
    "T51n2067_007:0033c05_17": "作八十五歲字。",
    "T51n2067_007:0033c06_0": "釋慧斌。",
    "T51n2067_007:0033c06_1": "俗姓胡氏。",
    "T51n2067_007:0033c06_2": "出家。",
    "T51n2067_007:0033c06_3": "住豫章郡禪居道場。",
    "T51n2067_007:0033c07_0": "後師事天台智顗。",
    "T51n2067_007:0033c07_1": "祈求出家。",
    "T51n2067_007:0033c07_2": "蔬食長齊。",
    "T51n2067_007:0033c07_3": "精苦尤甚。",
    "T51n2067_007:0033c08_4": "隱居匡山。",
    "T51n2067_007:0033c08_5": "杜絕人物。",
    "T51n2067_007:0033c08_6": "誦法華經。",
    "T51n2067_007:0033c08_7": "初誦經竟。",
    "T51n2067_007:0033c09_8": "即燃左手第四指。",
    "T51n2067_007:0033c09_9": "以為供養。",
    "T51n2067_007:0033c09_10": "如此日限三遍。",
    "T51n2067_007:0033c10_11": "自是累年每有殊香熏馥房戶。",
    "T51n2067_007:0033c10_12": "又聞彈指感動居隣。",
    "T51n2067_007:0033c11_13": "以大業八年八月捨命。",
    "T51n2067_007:0033c11_14": "春秋四十有四。",
    "T51n2067_007:0033c12_15": "未亡之前。",
    "T51n2067_007:0033c12_16": "自覩神人現形數丈。",
    "T51n2067_007:0033c12_17": "而為作禮。",
    "T51n2067_007:0033c13_18": "稱歎持經功德。",
    "T51n2067_007:0033c13_19": "因言。",
    "T51n2067_007:0033c13_20": "法師當行。",
    "T51n2067_007:0033c13_21": "躬願陪從。",
    "T51n2067_007:0033c14_22": "又寺僧智海。",
    "T51n2067_007:0033c14_23": "實行人也。",
    "T51n2067_007:0033c14_24": "夢法師云。",
    "T51n2067_007:0033c14_25": "今生兜率陀天。",
    "T51n2067_007:0033c15_26": "接奉無由。",
    "T51n2067_007:0033c15_27": "便此辭別。",
    "T51n2067_007:0033c15_28": "深相勸課。",
    "T51n2067_007:0033c15_29": "使共行道。",
    "T51n2067_007:0033c16_30": "身亡以後。",
    "T51n2067_007:0033c16_31": "形體長大。",
    "T51n2067_007:0033c16_32": "倍於平昔。",
    "T51n2067_007:0033c16_33": "斂以舊衣。",
    "T51n2067_007:0033c17_34": "三分蔽一。",
    "T51n2067_007:0033c17_35": "道俗驚異。",
    "T51n2067_007:0033c17_36": "莫詳其理。",
    "T51n2067_007:0033c17_37": "遺言付囑。",
    "T51n2067_007:0033c18_38": "令身施眾生。",
    "T51n2067_007:0033c18_39": "同學僧顗。",
    "T51n2067_007:0033c18_40": "贊成其志。",
    "T51n2067_007:0033c18_41": "收骸。",
    "T51n2067_007:0033c19_0": "建立方墳於尸陀之所洪井巖焉。",
    "T51n2067_007:0033c20_0": "釋慧偕。",
    "T51n2067_007:0033c20_1": "俗姓劉。",
    "T51n2067_007:0033c20_2": "海陵人也。",
    "T51n2067_007:0033c20_3": "年九歲出家。",
    "T51n2067_007:0033c20_4": "事江都郡長樂寺盈法師。",
    "T51n2067_007:0033c21_5": "為弟子。",
    "T51n2067_007:0033c21_6": "年至十七。",
    "T51n2067_007:0033c21_7": "方誦法華。",
    "T51n2067_007:0033c22_8": "十八。",
    "T51n2067_007:0033c22_9": "師便遷化。",
    "T51n2067_007:0033c22_10": "唯餘第四卷見寶塔品。",
    "T51n2067_007:0033c23_0": "已後未過。",
    "T51n2067_007:0033c23_1": "年二十二。",
    "T51n2067_007:0033c23_2": "遂染時患。",
    "T51n2067_007:0033c23_3": "當時困篤。",
    "T51n2067_007:0033c23_4": "唯一心念觀世音勢至。",
    "T51n2067_007:0033c24_5": "及所誦經。",
    "T51n2067_007:0033c24_6": "請救免厄。",
    "T51n2067_007:0033c24_7": "忽夢有人。",
    "T51n2067_007:0033c25_8": "來追慧偕。",
    "T51n2067_007:0033c25_9": "及同寺智達。",
    "T51n2067_007:0033c25_10": "將去。",
    "T51n2067_007:0033c25_11": "經涉山嶮。",
    "T51n2067_007:0033c26_12": "履踐蓽蕕。",
    "T51n2067_007:0033c26_13": "俄頃到一處。",
    "T51n2067_007:0033c26_14": "如今府寺。",
    "T51n2067_007:0033c26_15": "行牆屋宇房廊宛然。",
    "T51n2067_007:0033c27_16": "兵衛森列。",
    "T51n2067_007:0033c27_17": "執持器仗。",
    "T51n2067_007:0033c27_18": "入門望見。",
    "T51n2067_007:0033c28_0": "一人戴烏紗帽。",
    "T51n2067_007:0033c28_1": "身著白衣。",
    "T51n2067_007:0033c28_2": "甚好鬢面。",
    "T51n2067_007:0033c28_3": "在廳上坐云。",
    "T51n2067_007:0033c29_4": "是閻羅王。",
    "T51n2067_007:0033c29_5": "傍無侍衛。",
    "T51n2067_007:0033c29_6": "此追攝人。",
    "T51n2067_007:0033c29_7": "送文書。",
    "T51n2067_007:0034a01_8": "舒王前案上。",
    "T51n2067_007:0034a01_9": "王即判偕等二人。",
    "T51n2067_007:0034a01_10": "取為左右。",
    "T51n2067_007:0034a02_0": "偕訴云。",
    "T51n2067_007:0034a02_1": "願誦法華經。",
    "T51n2067_007:0034a02_2": "餘半卷未度。",
    "T51n2067_007:0034a02_3": "及功德未了。",
    "T51n2067_007:0034a03_4": "所以不愜。",
    "T51n2067_007:0034a03_5": "王又判放偕。",
    "T51n2067_007:0034a03_6": "遙見放字分明。",
    "T51n2067_007:0034a03_7": "王即喚向所追慧偕人來脫衣。",
    "T51n2067_007:0034a04_8": "復喚得一人。",
    "T51n2067_007:0034a04_9": "頭有角形。",
    "T51n2067_007:0034a05_10": "狀如今鬼卒。",
    "T51n2067_007:0034a05_11": "手捉長鞭。",
    "T51n2067_007:0034a05_12": "撻此人。",
    "T51n2067_007:0034a05_13": "偕便驚覺。",
    "T51n2067_007:0034a06_14": "喚觀世音彌勒。",
    "T51n2067_007:0034a06_15": "斯須臾。",
    "T51n2067_007:0034a06_16": "乃見一梵僧。",
    "T51n2067_007:0034a07_0": "手把楊枝。",
    "T51n2067_007:0034a07_1": "復有一俗人。",
    "T51n2067_007:0034a07_2": "如今維摩詰像。",
    "T51n2067_007:0034a07_3": "手擎銅娑羅水。",
    "T51n2067_007:0034a08_4": "此僧。",
    "T51n2067_007:0034a08_5": "即持楊枝拂偕。",
    "T51n2067_007:0034a08_6": "取水賜漱。",
    "T51n2067_007:0034a09_0": "問。",
    "T51n2067_007:0034a09_1": "病得幾日。",
    "T51n2067_007:0034a09_2": "偕答。",
    "T51n2067_007:0034a09_3": "五日。",
    "T51n2067_007:0034a09_4": "僧云。",
    "T51n2067_007:0034a09_5": "六日當差。",
    "T51n2067_007:0034a09_6": "至明朝。",
    "T51n2067_007:0034a10_7": "即鼻中瀉血。",
    "T51n2067_007:0034a10_8": "便即解醒。",
    "T51n2067_007:0034a10_9": "偕病差後。",
    "T51n2067_007:0034a10_10": "經停少時。",
    "T51n2067_007:0034a11_11": "知達染患。",
    "T51n2067_007:0034a11_12": "首尾七日。",
    "T51n2067_007:0034a11_13": "便即命過。",
    "T51n2067_007:0034a11_14": "偕平復如故。",
    "T51n2067_007:0034a12_15": "已後罄捨身資。",
    "T51n2067_007:0034a12_16": "造彌陀觀音勢至等像。",
    "T51n2067_007:0034a13_0": "又造法華思蓋等雜經。",
    "T51n2067_007:0034a13_1": "二十餘部。",
    "T51n2067_007:0034a13_2": "至大業十二年。",
    "T51n2067_007:0034a14_3": "偕年四十三。",
    "T51n2067_007:0034a14_4": "後不知所終。",
    "T51n2067_007:0034a15_0": "釋智越。",
    "T51n2067_007:0034a15_1": "姓鄭氏。",
    "T51n2067_007:0034a15_2": "南陽人也。",
    "T51n2067_007:0034a15_3": "少出家。",
    "T51n2067_007:0034a15_4": "早離塵俗。",
    "T51n2067_007:0034a16_5": "後到金陵。",
    "T51n2067_007:0034a16_6": "便值智者。",
    "T51n2067_007:0034a16_7": "北面投誠。",
    "T51n2067_007:0034a16_8": "授以禪法。",
    "T51n2067_007:0034a17_9": "深達五門。",
    "T51n2067_007:0034a17_10": "窮通六妙。",
    "T51n2067_007:0034a17_11": "誦法華經。",
    "T51n2067_007:0034a17_12": "萬有餘遍。",
    "T51n2067_007:0034a18_13": "瓶水自盈。",
    "T51n2067_007:0034a18_14": "經之力也。",
    "T51n2067_007:0034a18_15": "學徒雖眾。",
    "T51n2067_007:0034a18_16": "最居稱首。",
    "T51n2067_007:0034a19_17": "臨海露山精舍。",
    "T51n2067_007:0034a19_18": "巨有靈異。",
    "T51n2067_007:0034a19_19": "智者每令影響。",
    "T51n2067_007:0034a20_0": "晦跡已後。",
    "T51n2067_007:0034a20_1": "台山一眾。",
    "T51n2067_007:0034a20_2": "斯焉是屬。",
    "T51n2067_007:0034a20_3": "大業十二年十一月二十三日。",
    "T51n2067_007:0034a21_4": "寢疾經旬。",
    "T51n2067_007:0034a21_5": "右脇而卒。",
    "T51n2067_007:0034a21_6": "春秋七十四。",
    "T51n2067_007:0034a22_7": "臨終之日。",
    "T51n2067_007:0034a22_8": "山崩地動。",
    "T51n2067_007:0034a22_9": "境內道俗。",
    "T51n2067_007:0034a22_10": "咸所見聞。",
    "T51n2067_007:0034a24_0": "釋僧朗。",
    "T51n2067_007:0034a24_1": "一名法朗。",
    "T51n2067_007:0034a24_2": "俗姓許氏。",
    "T51n2067_007:0034a24_3": "南陽人。",
    "T51n2067_007:0034a24_4": "年二十餘。",
    "T51n2067_007:0034a25_5": "欣欲出家。",
    "T51n2067_007:0034a25_6": "尋預剃落。",
    "T51n2067_007:0034a25_7": "捿止無定。",
    "T51n2067_007:0034a25_8": "多住鄂州。",
    "T51n2067_007:0034a26_9": "形貌與世殊。",
    "T51n2067_007:0034a26_10": "有奇相。",
    "T51n2067_007:0034a26_11": "飲噉同俗。",
    "T51n2067_007:0034a26_12": "為時共輕。",
    "T51n2067_007:0034a27_13": "常養一猴一犬。",
    "T51n2067_007:0034a27_14": "其狀偉大。",
    "T51n2067_007:0034a27_15": "皆黃赤色。",
    "T51n2067_007:0034a27_16": "不狎餘人。",
    "T51n2067_007:0034a28_17": "惟附於朗。",
    "T51n2067_007:0034a28_18": "日夕相隨。",
    "T51n2067_007:0034a28_19": "未曾捨離。",
    "T51n2067_007:0034a28_20": "若至食時。",
    "T51n2067_007:0034a29_21": "以木盂受食。",
    "T51n2067_007:0034a29_22": "朗噉飽已。",
    "T51n2067_007:0034a29_23": "餘者用餧。",
    "T51n2067_007:0034a29_24": "同器食訖。",
    "T51n2067_007:0034b01_25": "猴便取孟戴之。",
    "T51n2067_007:0034b01_26": "騎犬背上。",
    "T51n2067_007:0034b01_27": "先朗而行。",
    "T51n2067_007:0034b01_28": "人有奪者。",
    "T51n2067_007:0034b02_29": "輒為所咋。",
    "T51n2067_007:0034b02_30": "朗任犬盤遊。",
    "T51n2067_007:0034b02_31": "略無常度。",
    "T51n2067_007:0034b02_32": "陳末隋初。",
    "T51n2067_007:0034b03_33": "行於江嶺之表。",
    "T51n2067_007:0034b03_34": "章服麁弊。",
    "T51n2067_007:0034b03_35": "威儀越序。",
    "T51n2067_007:0034b04_0": "杖策徒行。",
    "T51n2067_007:0034b04_1": "護養生命。",
    "T51n2067_007:0034b04_2": "時復讀誦諸經。",
    "T51n2067_007:0034b04_3": "偏以法華為志。",
    "T51n2067_007:0034b05_4": "素乏聲[口*(上/下)]。",
    "T51n2067_007:0034b05_5": "乃潔誓誦之。",
    "T51n2067_007:0034b05_6": "一坐七遍。",
    "T51n2067_007:0034b05_7": "如是不久。",
    "T51n2067_007:0034b06_8": "音韻諧暢。",
    "T51n2067_007:0034b06_9": "或如箏笛。",
    "T51n2067_007:0034b06_10": "或似風雷。",
    "T51n2067_007:0034b06_11": "縱任抑揚。",
    "T51n2067_007:0034b07_12": "文句明了。",
    "T51n2067_007:0034b07_13": "而脣吻不動。",
    "T51n2067_007:0034b07_14": "轉起喉中。",
    "T51n2067_007:0034b07_15": "傍人觀者。",
    "T51n2067_007:0034b08_16": "視聽皆失。",
    "T51n2067_007:0034b08_17": "其誦必以七數為期。",
    "T51n2067_007:0034b08_18": "乃至七十。",
    "T51n2067_007:0034b09_19": "七百。",
    "T51n2067_007:0034b09_20": "七千。",
    "T51n2067_007:0034b09_21": "逮于七萬。",
    "T51n2067_007:0034b09_22": "然臂脚及手甲。",
    "T51n2067_007:0034b09_23": "縮任懷。",
    "T51n2067_007:0034b10_24": "有若龜藏。",
    "T51n2067_007:0034b10_25": "時同肉聚。",
    "T51n2067_007:0034b10_26": "或往酒席。",
    "T51n2067_007:0034b10_27": "同諸醼飲。",
    "T51n2067_007:0034b11_28": "而嚼噍猪肉。",
    "T51n2067_007:0034b11_29": "不測其來。",
    "T51n2067_007:0034b11_30": "故世語云。",
    "T51n2067_007:0034b11_31": "法華朗。",
    "T51n2067_007:0034b12_32": "五處俱時縮。",
    "T51n2067_007:0034b12_33": "猪肉滿口腹。",
    "T51n2067_007:0034b12_34": "或復巡江洄泝。",
    "T51n2067_007:0034b13_0": "拱手舟中。",
    "T51n2067_007:0034b13_1": "猴犬在傍。",
    "T51n2067_007:0034b13_2": "都無艤棹。",
    "T51n2067_007:0034b13_3": "隨意所往。",
    "T51n2067_007:0034b14_0": "雖凌犯風波。",
    "T51n2067_007:0034b14_1": "瞬息之間。",
    "T51n2067_007:0034b14_2": "便達所在。",
    "T51n2067_007:0034b14_3": "大業末歲。",
    "T51n2067_007:0034b15_0": "猶未塵飛。",
    "T51n2067_007:0034b15_1": "而朗口惟唱賊。",
    "T51n2067_007:0034b15_2": "朝夕不息。",
    "T51n2067_007:0034b15_3": "官人懼以惑眾。",
    "T51n2067_007:0034b16_4": "遂幽而殺之。",
    "T51n2067_007:0034b16_5": "襄陽法琳。",
    "T51n2067_007:0034b16_6": "素與交遊。",
    "T51n2067_007:0034b17_0": "奉其遠度。",
    "T51n2067_007:0034b17_1": "因事而述。",
    "T51n2067_007:0034b18_0": "釋玄秀。",
    "T51n2067_007:0034b18_1": "未詳氏族居貫。",
    "T51n2067_007:0034b18_2": "少出家。",
    "T51n2067_007:0034b18_3": "住黃州隨化寺。",
    "T51n2067_007:0034b19_4": "性清慎溫恭。",
    "T51n2067_007:0034b19_5": "為志常誦法華。",
    "T51n2067_007:0034b19_6": "每感微異。",
    "T51n2067_007:0034b19_7": "未以為怪。",
    "T51n2067_007:0034b20_8": "時屬炎暑。",
    "T51n2067_007:0034b20_9": "同友遂涼。",
    "T51n2067_007:0034b20_10": "遣召秀來。",
    "T51n2067_007:0034b20_11": "欲有談笑。",
    "T51n2067_007:0034b21_12": "既至房前。",
    "T51n2067_007:0034b21_13": "但見羽衛嚴肅。",
    "T51n2067_007:0034b21_14": "人馬偉大。",
    "T51n2067_007:0034b21_15": "怖而返告。",
    "T51n2067_007:0034b22_16": "同往共觀。",
    "T51n2067_007:0034b22_17": "如初不異。",
    "T51n2067_007:0034b22_18": "轉至後門。",
    "T51n2067_007:0034b22_19": "其徒彌盛。",
    "T51n2067_007:0034b23_20": "上望空中。",
    "T51n2067_007:0034b23_21": "填塞無際。",
    "T51n2067_007:0034b23_22": "多乘象馬。",
    "T51n2067_007:0034b23_23": "類雜鬼神。",
    "T51n2067_007:0034b24_24": "乃知其感通也。",
    "T51n2067_007:0034b24_25": "置而却返。",
    "T51n2067_007:0034b24_26": "明晨慚謝。",
    "T51n2067_007:0034b24_27": "朋徒遂絕。",
    "T51n2067_007:0034b25_28": "秀專斯業。",
    "T51n2067_007:0034b25_29": "隋末終寺。",
    "T51n2067_007:0034b26_0": "釋慧峙。",
    "T51n2067_007:0034b26_1": "未詳氏族。",
    "T51n2067_007:0034b26_2": "始興人也。",
    "T51n2067_007:0034b26_3": "少而道素。",
    "T51n2067_007:0034b26_4": "勤於聽習。",
    "T51n2067_007:0034b27_5": "誦法華經。",
    "T51n2067_007:0034b27_6": "凡三千餘遍。",
    "T51n2067_007:0034b27_7": "年二十三。",
    "T51n2067_007:0034b27_8": "正聽律。",
    "T51n2067_007:0034b28_9": "忽染時患。",
    "T51n2067_007:0034b28_10": "經涉數旬。",
    "T51n2067_007:0034b28_11": "乃夢有人將峙。",
    "T51n2067_007:0034b28_12": "到一所牆院。",
    "T51n2067_007:0034b29_13": "赤白一如官舍。",
    "T51n2067_007:0034b29_14": "入門即見貴人。",
    "T51n2067_007:0034b29_15": "形長八九尺。",
    "T51n2067_007:0034c01_16": "身著絳紺袍。",
    "T51n2067_007:0034c01_17": "戴烏紗帽。",
    "T51n2067_007:0034c01_18": "云。",
    "T51n2067_007:0034c01_19": "是閻羅王。",
    "T51n2067_007:0034c02_20": "王問。",
    "T51n2067_007:0034c02_21": "師作何德業。",
    "T51n2067_007:0034c02_22": "峙答云。",
    "T51n2067_007:0034c02_23": "少來誦法華經。",
    "T51n2067_007:0034c03_0": "王云。",
    "T51n2067_007:0034c03_1": "可誦。",
    "T51n2067_007:0034c03_2": "峙即覺昇一高座面向西。",
    "T51n2067_007:0034c03_3": "誦法華經第二卷。",
    "T51n2067_007:0034c04_4": "到譬喻品中譬如長者有一大宅便住。",
    "T51n2067_007:0034c05_5": "王即起云。",
    "T51n2067_007:0034c05_6": "法師還去。",
    "T51n2067_007:0034c05_7": "命二人送。",
    "T51n2067_007:0034c05_8": "一人姓陳。",
    "T51n2067_007:0034c06_9": "一人不記。",
    "T51n2067_007:0034c06_10": "送出到路側。",
    "T51n2067_007:0034c06_11": "將峙入一棘林中。",
    "T51n2067_007:0034c07_0": "斷峙身為兩段。",
    "T51n2067_007:0034c07_1": "人各捉一段。",
    "T51n2067_007:0034c07_2": "到河水邊洗之。",
    "T51n2067_007:0034c08_0": "竟仍擲過傍岸。",
    "T51n2067_007:0034c08_1": "因即醒悟。",
    "T51n2067_007:0034c08_2": "疾亦輕損。",
    "T51n2067_007:0034c08_3": "數日平復。",
    "T51n2067_007:0034c09_4": "即能聽誦。",
    "T51n2067_007:0034c09_5": "又年五十五時。",
    "T51n2067_007:0034c09_6": "身又染患。",
    "T51n2067_007:0034c09_7": "忽夢見在始興果心寺浮圖上立。",
    "T51n2067_007:0034c10_8": "有人推下云。",
    "T51n2067_007:0034c10_9": "乞汝八十餘年命。",
    "T51n2067_007:0034c11_10": "因即痊愈。",
    "T51n2067_007:0034c11_11": "到大業十三年。",
    "T51n2067_007:0034c11_12": "年八十二歲。",
    "T51n2067_007:0034c12_13": "後不知所終。",
    "T51n2067_007:0034c13_0": "釋智業。",
    "T51n2067_007:0034c13_1": "俗姓揚氏。",
    "T51n2067_007:0034c13_2": "少小出家。",
    "T51n2067_007:0034c13_3": "住揚州長樂寺。",
    "T51n2067_007:0034c14_0": "精勤戒業。",
    "T51n2067_007:0034c14_1": "誦法華經。",
    "T51n2067_007:0034c14_2": "文句通利。",
    "T51n2067_007:0034c14_3": "猶若瀉瓶。",
    "T51n2067_007:0034c14_4": "隋大業末年。",
    "T51n2067_007:0034c15_5": "字文化及在揚州作逆。",
    "T51n2067_007:0034c15_6": "殺煬帝於宮闈。",
    "T51n2067_007:0034c16_7": "于時天下崩離百姓飢饉。",
    "T51n2067_007:0034c16_8": "居人波迸。",
    "T51n2067_007:0034c17_0": "米升萬錢。",
    "T51n2067_007:0034c17_1": "智業。",
    "T51n2067_007:0034c17_2": "時在別院。",
    "T51n2067_007:0034c17_3": "居一小屋。",
    "T51n2067_007:0034c17_4": "專誦不輟。",
    "T51n2067_007:0034c18_5": "遂餓死房中。",
    "T51n2067_007:0034c18_6": "無人收葬。",
    "T51n2067_007:0034c18_7": "此屋因復傾倒。",
    "T51n2067_007:0034c18_8": "智業屍骸。",
    "T51n2067_007:0034c19_9": "竟在其下。",
    "T51n2067_007:0034c19_10": "及義寧初。",
    "T51n2067_007:0034c19_11": "平定之後。",
    "T51n2067_007:0034c19_12": "其處忽生一莖蓮花。",
    "T51n2067_007:0034c20_13": "光色開敷。",
    "T51n2067_007:0034c20_14": "異常鮮麗。",
    "T51n2067_007:0034c20_15": "道俗驚嗟。",
    "T51n2067_007:0034c21_16": "莫知其故。",
    "T51n2067_007:0034c21_17": "時寺僧有耆舊者。",
    "T51n2067_007:0034c21_18": "乃悟曰。",
    "T51n2067_007:0034c21_19": "此地。",
    "T51n2067_007:0034c22_20": "曾有一僧。",
    "T51n2067_007:0034c22_21": "專誦法華。",
    "T51n2067_007:0034c22_22": "于時。",
    "T51n2067_007:0034c22_23": "既屬喪亂。",
    "T51n2067_007:0034c22_24": "於茲捨命。",
    "T51n2067_007:0034c23_25": "無人埋殯。",
    "T51n2067_007:0034c23_26": "骸骨在此。",
    "T51n2067_007:0034c23_27": "必是僧之靈也。",
    "T51n2067_007:0034c24_0": "乃尋堀花根。",
    "T51n2067_007:0034c24_1": "果得骸骨。",
    "T51n2067_007:0034c24_2": "其青蓮花。",
    "T51n2067_007:0034c24_3": "乃從髑髏中舌根下生。",
    "T51n2067_007:0034c25_4": "舌如生存。",
    "T51n2067_007:0034c25_5": "都不爛壞。",
    "T51n2067_007:0034c25_6": "寺眾。",
    "T51n2067_007:0034c25_7": "乃將舌及華上堂。",
    "T51n2067_007:0034c26_8": "鳴鐘集眾。",
    "T51n2067_007:0034c26_9": "為轉法華。",
    "T51n2067_007:0034c26_10": "其舌聞經。",
    "T51n2067_007:0034c27_0": "猶能振動。",
    "T51n2067_007:0034c27_1": "道俗聞之。",
    "T51n2067_007:0034c27_2": "觀者如堵。",
    "T51n2067_007:0034c27_3": "莫不嗟歎。",
    "T51n2067_007:0034c28_0": "咸發勝心矣。",
    "T51n2067_007:0034c29_0": "隋并州人。",
    "T51n2067_007:0034c29_1": "高守節。",
    "T51n2067_007:0034c29_2": "家代信奉。",
    "T51n2067_007:0034c29_3": "而守節尤為精到。",
    "T51n2067_007:0035a01_4": "年十六七時。",
    "T51n2067_007:0035a01_5": "曾遊代都。",
    "T51n2067_007:0035a01_6": "道遇沙門。",
    "T51n2067_007:0035a01_7": "年可六十。",
    "T51n2067_007:0035a02_8": "自稱海雲。",
    "T51n2067_007:0035a02_9": "與之談敘。",
    "T51n2067_007:0035a02_10": "因謂曰。",
    "T51n2067_007:0035a02_11": "兒能誦經不。",
    "T51n2067_007:0035a03_12": "答曰。",
    "T51n2067_007:0035a03_13": "誠其本心。",
    "T51n2067_007:0035a03_14": "雲。",
    "T51n2067_007:0035a03_15": "即將向五臺。",
    "T51n2067_007:0035a03_16": "至一處。",
    "T51n2067_007:0035a04_0": "見三草屋。",
    "T51n2067_007:0035a04_1": "纔得容身。",
    "T51n2067_007:0035a04_2": "乃於中止。",
    "T51n2067_007:0035a04_3": "教誦法華經。",
    "T51n2067_007:0035a05_0": "在外乞求。",
    "T51n2067_007:0035a05_1": "給其衣食。",
    "T51n2067_007:0035a05_2": "節。",
    "T51n2067_007:0035a05_3": "屢見胡僧來至。",
    "T51n2067_007:0035a05_4": "與師言笑。",
    "T51n2067_007:0035a06_5": "終而歸去後。",
    "T51n2067_007:0035a06_6": "雲輒問曰。",
    "T51n2067_007:0035a06_7": "識向胡僧不。",
    "T51n2067_007:0035a07_0": "曰。",
    "T51n2067_007:0035a07_1": "不識。",
    "T51n2067_007:0035a07_2": "雲貌似戲言曰。",
    "T51n2067_007:0035a07_3": "是文殊師利菩薩。",
    "T51n2067_007:0035a08_0": "節。",
    "T51n2067_007:0035a08_1": "雖頻承此告。",
    "T51n2067_007:0035a08_2": "未悟其旨。",
    "T51n2067_007:0035a08_3": "後忽使節下山。",
    "T51n2067_007:0035a08_4": "就村取物。",
    "T51n2067_007:0035a09_5": "仍誡曰。",
    "T51n2067_007:0035a09_6": "夫女人者。",
    "T51n2067_007:0035a09_7": "眾惡之本。",
    "T51n2067_007:0035a09_8": "壞菩提道。",
    "T51n2067_007:0035a10_9": "破涅槃城。",
    "T51n2067_007:0035a10_10": "汝向人間。",
    "T51n2067_007:0035a10_11": "宜其深慎。",
    "T51n2067_007:0035a10_12": "節敬諾。",
    "T51n2067_007:0035a11_0": "受教下山。",
    "T51n2067_007:0035a11_1": "中路乃見一女人。",
    "T51n2067_007:0035a11_2": "年十四五。",
    "T51n2067_007:0035a11_3": "衣服鮮花。",
    "T51n2067_007:0035a12_4": "姿容雅麗。",
    "T51n2067_007:0035a12_5": "乘一白馬。",
    "T51n2067_007:0035a12_6": "直趣其前。",
    "T51n2067_007:0035a12_7": "扣頭向節曰。",
    "T51n2067_007:0035a13_8": "身有急患。",
    "T51n2067_007:0035a13_9": "要須下乘。",
    "T51n2067_007:0035a13_10": "馬好跳躍。",
    "T51n2067_007:0035a13_11": "制不自由。",
    "T51n2067_007:0035a14_12": "希君扶接。",
    "T51n2067_007:0035a14_13": "濟此微命。",
    "T51n2067_007:0035a14_14": "節遂念師言。",
    "T51n2067_007:0035a14_15": "竟不迴顧。",
    "T51n2067_007:0035a15_16": "女亦追尋數里。",
    "T51n2067_007:0035a15_17": "苦切其辭。",
    "T51n2067_007:0035a15_18": "節執志如初。",
    "T51n2067_007:0035a16_0": "俄而致失。",
    "T51n2067_007:0035a16_1": "既還本處。",
    "T51n2067_007:0035a16_2": "具陳其事。",
    "T51n2067_007:0035a16_3": "師曰。",
    "T51n2067_007:0035a16_4": "汝真丈夫矣。",
    "T51n2067_007:0035a17_5": "雖然。",
    "T51n2067_007:0035a17_6": "此是文殊師利菩薩。",
    "T51n2067_007:0035a17_7": "節尚不悟。",
    "T51n2067_007:0035a17_8": "猶謂戲言。",
    "T51n2067_007:0035a18_9": "然。",
    "T51n2067_007:0035a18_10": "於此誦經。",
    "T51n2067_007:0035a18_11": "凡歷三載。",
    "T51n2067_007:0035a18_12": "法華一部。",
    "T51n2067_007:0035a19_0": "甚得精淳。",
    "T51n2067_007:0035a19_1": "後聞長安度人。",
    "T51n2067_007:0035a19_2": "心希剃落。",
    "T51n2067_007:0035a19_3": "晨昏方便。",
    "T51n2067_007:0035a20_4": "諮師欲去。",
    "T51n2067_007:0035a20_5": "師云。",
    "T51n2067_007:0035a20_6": "汝誦得法華。",
    "T51n2067_007:0035a20_7": "大乘種子。",
    "T51n2067_007:0035a21_0": "今已成就。",
    "T51n2067_007:0035a21_1": "汝必欲去。",
    "T51n2067_007:0035a21_2": "當詢好師。",
    "T51n2067_007:0035a21_3": "此之一別。",
    "T51n2067_007:0035a21_4": "難重相見。",
    "T51n2067_007:0035a22_5": "汝京內可於禪定道場。",
    "T51n2067_007:0035a22_6": "依止臥倫禪師。",
    "T51n2067_007:0035a23_7": "節入京求度。",
    "T51n2067_007:0035a23_8": "不遂其心。",
    "T51n2067_007:0035a23_9": "乃往倫所。",
    "T51n2067_007:0035a23_10": "倫曰。",
    "T51n2067_007:0035a24_0": "汝從何來。",
    "T51n2067_007:0035a24_1": "答。",
    "T51n2067_007:0035a24_2": "從五臺山來。",
    "T51n2067_007:0035a24_3": "和尚。",
    "T51n2067_007:0035a24_4": "遣與師為弟子。",
    "T51n2067_007:0035a25_5": "倫曰。",
    "T51n2067_007:0035a25_6": "和尚名誰。",
    "T51n2067_007:0035a25_7": "答曰。",
    "T51n2067_007:0035a25_8": "名海雲。",
    "T51n2067_007:0035a25_9": "倫大驚歎曰。",
    "T51n2067_007:0035a26_10": "五臺山者。",
    "T51n2067_007:0035a26_11": "文殊所居。",
    "T51n2067_007:0035a26_12": "海雲比丘。",
    "T51n2067_007:0035a26_13": "即是華嚴經中善財童子。",
    "T51n2067_007:0035a27_14": "第三大善知識。",
    "T51n2067_007:0035a27_15": "汝何以棄此聖人。",
    "T51n2067_007:0035a28_16": "千劫萬劫。",
    "T51n2067_007:0035a28_17": "無由一遇。",
    "T51n2067_007:0035a28_18": "何其誤耶。",
    "T51n2067_007:0035a28_19": "節乃始悟由來。",
    "T51n2067_007:0035a29_20": "恨不碎其身骨。",
    "T51n2067_007:0035a29_21": "而愚情眷眷。",
    "T51n2067_007:0035a29_22": "猶希再覩。",
    "T51n2067_007:0035b01_23": "遂辭倫返迹。",
    "T51n2067_007:0035b01_24": "日夜奔馳。",
    "T51n2067_007:0035b01_25": "及至故處。",
    "T51n2067_007:0035b01_26": "都無所見。",
    "T51n2067_007:0035b03_0": "弘贊法華傳卷第七"
}