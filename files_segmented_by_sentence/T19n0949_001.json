[
    {
        "source_sentence": "奇特最勝金輪佛頂念誦儀軌法",
        "from": "T19n0949_001:0190b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要",
        "from": "T19n0949_001:0190b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫欲修習一字頂輪王法者。先須入大曼荼羅",
        "from": "T19n0949_001:0190b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海會。",
        "from": "T19n0949_001:0190b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師親受灌頂。",
        "from": "T19n0949_001:0190b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既蒙印可方得諮。",
        "from": "T19n0949_001:0190b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學微妙軌則真言教門。",
        "from": "T19n0949_001:0190b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立道場。",
        "from": "T19n0949_001:0190b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一依本部儀式。",
        "from": "T19n0949_001:0190b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫本尊像。",
        "from": "T19n0949_001:0190b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法安置。",
        "from": "T19n0949_001:0190b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲疾成悉地。",
        "from": "T19n0949_001:0190b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須沐浴。",
        "from": "T19n0949_001:0190b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著新淨衣。",
        "from": "T19n0949_001:0190b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出家者。",
        "from": "T19n0949_001:0190b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精持律儀。",
        "from": "T19n0949_001:0190b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得缺犯。",
        "from": "T19n0949_001:0190b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在家者。",
        "from": "T19n0949_001:0190b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應受近住八支淨戒。",
        "from": "T19n0949_001:0190b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當殷重發廣大心。",
        "from": "T19n0949_001:0190b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於阿闍梨所敬仰如佛。",
        "from": "T19n0949_001:0190b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍諸有情起大悲願。",
        "from": "T19n0949_001:0190b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不惜身命常生濟度。",
        "from": "T19n0949_001:0190b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉令離苦獲大利樂。",
        "from": "T19n0949_001:0190b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入道場已。",
        "from": "T19n0949_001:0190b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五輪投地。",
        "from": "T19n0949_001:0190b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔誠普禮一切如來。",
        "from": "T19n0949_001:0190c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復對本尊。",
        "from": "T19n0949_001:0190c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒沙聖眾以淨三業悔除罪障。",
        "from": "T19n0949_001:0190c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請諸佛轉妙法輪。",
        "from": "T19n0949_001:0190c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜三乘所修福智。",
        "from": "T19n0949_001:0190c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以斯妙善迴向菩提。",
        "from": "T19n0949_001:0190c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界眾生同階佛果。",
        "from": "T19n0949_001:0190c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以塗香塗手。",
        "from": "T19n0949_001:0190c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌如蓮。",
        "from": "T19n0949_001:0190c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察本源。",
        "from": "T19n0949_001:0190c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性清淨。",
        "from": "T19n0949_001:0190c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸客塵之所覆蔽。",
        "from": "T19n0949_001:0190c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此觀已。",
        "from": "T19n0949_001:0190c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心廣布。",
        "from": "T19n0949_001:0190c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我與眾生亦同清淨。",
        "from": "T19n0949_001:0190c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令清淨故。",
        "from": "T19n0949_001:0190c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此殊勝。",
        "from": "T19n0949_001:0190c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浴澡真言。",
        "from": "T19n0949_001:0190c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一薩嚩二合婆去嚩󰡊詩律反度唅由三誦明故。",
        "from": "T19n0949_001:0190c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意三業乃至遍法界一切悉清淨。",
        "from": "T19n0949_001:0190c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結一切諸佛部心三昧耶印。",
        "from": "T19n0949_001:0190c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀十度內叉拳。",
        "from": "T19n0949_001:0190c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智二度並申合。",
        "from": "T19n0949_001:0190c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍觀諸佛滿虛空。",
        "from": "T19n0949_001:0190c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三誦真言頂上散。",
        "from": "T19n0949_001:0190c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛部心真言曰。",
        "from": "T19n0949_001:0190c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一爾曩爾迦半字呼娑嚩二合賀引由結前印誦真言故。",
        "from": "T19n0949_001:0190c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛一切如來。",
        "from": "T19n0949_001:0190c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承本誓願。",
        "from": "T19n0949_001:0190c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉運集。",
        "from": "T19n0949_001:0190c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿虛空。",
        "from": "T19n0949_001:0190c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒光照燭。",
        "from": "T19n0949_001:0190c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行人。",
        "from": "T19n0949_001:0190c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸障惱。",
        "from": "T19n0949_001:0190c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業清淨。",
        "from": "T19n0949_001:0190c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速證菩提。",
        "from": "T19n0949_001:0190c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結一切諸菩薩蓮華部心三昧耶印。",
        "from": "T19n0949_001:0190c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前結佛部心印　　屈左智度入掌中",
        "from": "T19n0949_001:0190c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪度直竪或三招　　運心憶念觀自在",
        "from": "T19n0949_001:0190c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切微塵菩薩眾　　持蓮眷屬滿空中",
        "from": "T19n0949_001:0190c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心三遍誦真言　　方以印於頂右散",
        "from": "T19n0949_001:0191a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華部心真言曰。",
        "from": "T19n0949_001:0191a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿去嚕力迦半字呼娑嚩二合引賀由結前印誦真言故。",
        "from": "T19n0949_001:0191a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩承本誓願。",
        "from": "T19n0949_001:0191a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將諸蓮華眾無量菩薩。",
        "from": "T19n0949_001:0191a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿虛空。",
        "from": "T19n0949_001:0191a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉運集。",
        "from": "T19n0949_001:0191a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明。",
        "from": "T19n0949_001:0191a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行者。",
        "from": "T19n0949_001:0191a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得清淨。",
        "from": "T19n0949_001:0191a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求滿足。",
        "from": "T19n0949_001:0191a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸障難。",
        "from": "T19n0949_001:0191a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾證菩提。",
        "from": "T19n0949_001:0191a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結一切金剛部心三昧耶印。",
        "from": "T19n0949_001:0191a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前復結佛部心印。",
        "from": "T19n0949_001:0191a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈右禪度入掌中　　智度直竪或三招",
        "from": "T19n0949_001:0191a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵沙眷屬共圍繞　　威光赫奕遍虛空",
        "from": "T19n0949_001:0191a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至誠三遍誦真言　　方以印於頂左散",
        "from": "T19n0949_001:0191a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛部心真言曰。",
        "from": "T19n0949_001:0191a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日羅二合地力二合迦半字呼娑縛二合賀引由結前印誦真言故。",
        "from": "T19n0949_001:0191a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方一切金剛手等承本願因。",
        "from": "T19n0949_001:0191a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲而集。",
        "from": "T19n0949_001:0191a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現大威德。",
        "from": "T19n0949_001:0191a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行人。",
        "from": "T19n0949_001:0191a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除障摧魔。",
        "from": "T19n0949_001:0191a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在無礙。",
        "from": "T19n0949_001:0191a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾成悉地。",
        "from": "T19n0949_001:0191a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速至菩提。",
        "from": "T19n0949_001:0191a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛甲冑護身印。",
        "from": "T19n0949_001:0191a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀羽作金剛拳　　禪智橫屈於掌內",
        "from": "T19n0949_001:0191a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力如鉤慣甲勢　　加持心額二肩喉",
        "from": "T19n0949_001:0191a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心三遍誦真言　　印身五處頂上散",
        "from": "T19n0949_001:0191a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲冑護身真言曰。",
        "from": "T19n0949_001:0191a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵𭊘入嚩攞二合𤙖由結甲印誦真言故。",
        "from": "T19n0949_001:0191a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持五處。",
        "from": "T19n0949_001:0191a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成大護身。",
        "from": "T19n0949_001:0191a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即同金剛堅固之體。",
        "from": "T19n0949_001:0191a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藏王承本願力。",
        "from": "T19n0949_001:0191a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領諸眷屬。",
        "from": "T19n0949_001:0191a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數如塵沙無量金剛圍遶侍從。",
        "from": "T19n0949_001:0191a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明熾盛。",
        "from": "T19n0949_001:0191a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現忿怒形。",
        "from": "T19n0949_001:0191a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行人。",
        "from": "T19n0949_001:0191a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威德自在。",
        "from": "T19n0949_001:0191a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除作障。",
        "from": "T19n0949_001:0191a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧壞諸魔。",
        "from": "T19n0949_001:0191a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小則能護一身。",
        "from": "T19n0949_001:0191a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大則護持國界。",
        "from": "T19n0949_001:0191a28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災厄。",
        "from": "T19n0949_001:0191a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水火刀兵。",
        "from": "T19n0949_001:0191a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒藥蠱虎狼猛獸。",
        "from": "T19n0949_001:0191a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉遠離不敢視之。",
        "from": "T19n0949_001:0191b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那藥迦自然怖走。",
        "from": "T19n0949_001:0191b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永無惱害。",
        "from": "T19n0949_001:0191b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾證菩提。",
        "from": "T19n0949_001:0191b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結辨事印。",
        "from": "T19n0949_001:0191b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀二羽內叉拳　　禪智雙屈入掌中",
        "from": "T19n0949_001:0191b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然申忍願頭相跓　　頂上三旋成結護",
        "from": "T19n0949_001:0191b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左轉三匝是辟除　　隨心所到作方隅",
        "from": "T19n0949_001:0191b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破法能成一切事辦事佛頂真言曰。",
        "from": "T19n0949_001:0191b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三去漫多母馱南引唵拏嚕唵二合滿馱娑嚩二合賀由結前印及誦真言。",
        "from": "T19n0949_001:0191b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能辟除及結護界。",
        "from": "T19n0949_001:0191b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名諸佛警悟聖心。",
        "from": "T19n0949_001:0191b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能破他法。",
        "from": "T19n0949_001:0191b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞滅魔羅。",
        "from": "T19n0949_001:0191b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍八部。",
        "from": "T19n0949_001:0191b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅剎藥叉。",
        "from": "T19n0949_001:0191b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦。",
        "from": "T19n0949_001:0191b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忙怖奔走。",
        "from": "T19n0949_001:0191b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印。",
        "from": "T19n0949_001:0191b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世出世間一切事業速能成辦。",
        "from": "T19n0949_001:0191b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在無礙。",
        "from": "T19n0949_001:0191b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉地現前。",
        "from": "T19n0949_001:0191b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉獻閼伽印。",
        "from": "T19n0949_001:0191b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽仰掌捨器形。",
        "from": "T19n0949_001:0191b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力屈於忍願傍　　禪智曲補於進力",
        "from": "T19n0949_001:0191b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧器三旋當額上　　想浴聖眾淨如蓮",
        "from": "T19n0949_001:0191b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閼伽浴聖真言曰。",
        "from": "T19n0949_001:0191b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩麼三去滿多母馱南引誐誐曩糝魔沙麼娑嚩二合引賀由結此印誦真言奉獻閼伽浴聖故。",
        "from": "T19n0949_001:0191b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表修行人無始垢業蕩除清淨。",
        "from": "T19n0949_001:0191b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如妙蓮華。",
        "from": "T19n0949_001:0191b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來果獲得無染智。",
        "from": "T19n0949_001:0191b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結虛空普供印。",
        "from": "T19n0949_001:0191b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽合掌交初分　　右押左縛如金剛",
        "from": "T19n0949_001:0191b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想成真實微妙供　　無量雲海奉聖眾",
        "from": "T19n0949_001:0191b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養一切諸如來　　後說四句妙伽他",
        "from": "T19n0949_001:0191b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五誦真言頂上散虛空大明真言曰曩莫三滿多沒馱南引薩嚩二合他引欠盟娜孽帝薩頗二合囉呬𤚥誐誐曩劍娑嚩二合引賀由結此印誦真言故。",
        "from": "T19n0949_001:0191c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不思議力。",
        "from": "T19n0949_001:0191c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從印流出一切供養。",
        "from": "T19n0949_001:0191c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量天眾各持天寶器。",
        "from": "T19n0949_001:0191c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛諸妙供養。",
        "from": "T19n0949_001:0191c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塞滿虛空所謂塗香燒燈。",
        "from": "T19n0949_001:0191c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食衣服。",
        "from": "T19n0949_001:0191c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幢蓋瓔珞。",
        "from": "T19n0949_001:0191c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻如來誦一遍故。",
        "from": "T19n0949_001:0191c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出塗香。",
        "from": "T19n0949_001:0191c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得戒品塗香。",
        "from": "T19n0949_001:0191c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦二遍故。",
        "from": "T19n0949_001:0191c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出焚香。",
        "from": "T19n0949_001:0191c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得定芬馥。",
        "from": "T19n0949_001:0191c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三遍故。",
        "from": "T19n0949_001:0191c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出花鬘。",
        "from": "T19n0949_001:0191c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得離染妙蓮。",
        "from": "T19n0949_001:0191c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦四遍故。",
        "from": "T19n0949_001:0191c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出寶食。",
        "from": "T19n0949_001:0191c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得法喜禪悅。",
        "from": "T19n0949_001:0191c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦五遍故。",
        "from": "T19n0949_001:0191c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出寶燈。",
        "from": "T19n0949_001:0191c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得如來五眼。",
        "from": "T19n0949_001:0191c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得如上諸功德波羅蜜門皆具足。",
        "from": "T19n0949_001:0191c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以心遍法界。",
        "from": "T19n0949_001:0191c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以誠實言誦妙伽他。",
        "from": "T19n0949_001:0191c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "T19n0949_001:0191c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我功德力　　如來加持力",
        "from": "T19n0949_001:0191c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以法界力　　普供養而住",
        "from": "T19n0949_001:0191c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以梵讚歌詠。",
        "from": "T19n0949_001:0191c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊相好金身殊勝功德。",
        "from": "T19n0949_001:0191c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麼禰史膩薩嚩若誐一地帶史膩拽捨枲嚩二合𩕳二步嘌步晚禰迦滿馱三三麼娑多二合尾儞也二合地跛四訖羅二合麼哩𩕳曩謨窣覩二合帝怛囉二合哆哩左訖羅二合嚩轉舌底𩕳六由讚佛三身。",
        "from": "T19n0949_001:0191c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根諸功德。",
        "from": "T19n0949_001:0191c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬四千種。",
        "from": "T19n0949_001:0191c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊勝不思議。",
        "from": "T19n0949_001:0191c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承斯歌詠因。",
        "from": "T19n0949_001:0191c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲妙果。",
        "from": "T19n0949_001:0191c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福聚海無量。",
        "from": "T19n0949_001:0191c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等同奇特尊。",
        "from": "T19n0949_001:0191c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結佛眼大明印。",
        "from": "T19n0949_001:0191c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀虛合未開敷　　禪智雙屈在掌中",
        "from": "T19n0949_001:0191c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力各押忍願背　　如眼開明照一切",
        "from": "T19n0949_001:0191c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安眉心額二肩喉　　起大悲愍怖畏除",
        "from": "T19n0949_001:0191c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨誦真言頂上散。",
        "from": "T19n0949_001:0191c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛眼大明母真言曰。",
        "from": "T19n0949_001:0192a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫薩嚩怛他去引蘗帝毘庾引一囉褐二合二毘藥二合三藐三沒弟毘藥二合三唵四嚕嚕窣普嚕二合入嚩攞底丁以反瑟姹二合六悉馱路引左𩕳薩嚩二合𡃤他二合去聲呼娑去馱𩕳八娑嚩二合引賀此名一切佛眼大明。",
        "from": "T19n0949_001:0192a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能息可畏難調伏者。",
        "from": "T19n0949_001:0192a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲成就世間出世間一切佛頂大輪王法一切事位滅諸諍論。",
        "from": "T19n0949_001:0192a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是一切諸佛種族母。",
        "from": "T19n0949_001:0192a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復是一切諸大菩薩生養母。",
        "from": "T19n0949_001:0192a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說頂輪真言威德奇特。",
        "from": "T19n0949_001:0192a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大菩薩皆失本心。",
        "from": "T19n0949_001:0192a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天龍神威力滅沒。",
        "from": "T19n0949_001:0192a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡誦一字佛頂明。",
        "from": "T19n0949_001:0192a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須誦佛眼明。",
        "from": "T19n0949_001:0192a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦畢已。",
        "from": "T19n0949_001:0192a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦誦七遍。",
        "from": "T19n0949_001:0192a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾聖歡喜安樂有情。",
        "from": "T19n0949_001:0192a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結一字根本印。",
        "from": "T19n0949_001:0192a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀密縛內叉拳　　由慼忍願如劍形",
        "from": "T19n0949_001:0192a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智進力甲柱跓　　是名金剛佛頂印",
        "from": "T19n0949_001:0192a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想身威德同本尊　　流光晃曜遍十方",
        "from": "T19n0949_001:0192a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印身五處頂上散。",
        "from": "T19n0949_001:0192a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金輪頂王真言曰。",
        "from": "T19n0949_001:0192a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是摩訶印　　所謂如來頂",
        "from": "T19n0949_001:0192a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由斯結誦故　　即同於世尊",
        "from": "T19n0949_001:0192a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演說頂輪明　　三千六反動",
        "from": "T19n0949_001:0192a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山河皆勇沸　　大火遍魔宮",
        "from": "T19n0949_001:0192a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惶怖盡歸依　　地獄眾苦息",
        "from": "T19n0949_001:0192a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩龍天眾　　畏仰如佛身",
        "from": "T19n0949_001:0192a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結大慈普護印。",
        "from": "T19n0949_001:0192a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十度相叉作月形　禪智檀惠相著　印心額喉頂上散慈護真言曰。",
        "from": "T19n0949_001:0192b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印誦明除怖畏　　起大悲心遍一切",
        "from": "T19n0949_001:0192b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有怨敵惡相淩　　願彼皆當大安樂",
        "from": "T19n0949_001:0192b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此三誦悲護故　　毒害之心自覺悟",
        "from": "T19n0949_001:0192b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深生悔過向菩提　　歡喜敬仰前人所",
        "from": "T19n0949_001:0192b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初後若常誦此明　　惶怖眾生得安慰",
        "from": "T19n0949_001:0192b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護大利益殊勝事　　速滿諸願證悉地",
        "from": "T19n0949_001:0192b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結淨珠印。",
        "from": "T19n0949_001:0192b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盤珠於掌內　　如蓮未開形",
        "from": "T19n0949_001:0192b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧合於心上　　三七遍加持",
        "from": "T19n0949_001:0192b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴慇重心　　如法而供養",
        "from": "T19n0949_001:0192b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨珠真言曰。",
        "from": "T19n0949_001:0192b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿𠺶𭊘二合引帝𠳿惹曳而異反悉地引悉馱𡃤二合剃娑嚩二合引賀次結持數印。",
        "from": "T19n0949_001:0192b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽半金剛　　禪智捻戒方",
        "from": "T19n0949_001:0192b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力忍願後屈不相著　　七遍持數明",
        "from": "T19n0949_001:0192b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後而念誦。",
        "from": "T19n0949_001:0192b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持珠真言曰。",
        "from": "T19n0949_001:0192b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當淨三業　　加法而念誦",
        "from": "T19n0949_001:0192b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心莫散亂　　注想於本尊",
        "from": "T19n0949_001:0192b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字句分明呼　　不緩亦不急",
        "from": "T19n0949_001:0192b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿生懈怠意　　聲咳及頻申",
        "from": "T19n0949_001:0192b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雜染縱惛沈　　如是諸過咎",
        "from": "T19n0949_001:0192b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少分生忘緣　　皆不得成就",
        "from": "T19n0949_001:0192b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦課數畢　　持珠安舊處",
        "from": "T19n0949_001:0192c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方入三昧耶　　當住本尊觀",
        "from": "T19n0949_001:0192c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食頃從定出　　却結根本印",
        "from": "T19n0949_001:0192c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結佛眼明　　歌詠音讚歎",
        "from": "T19n0949_001:0192c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普供閼伽已　　辟除左解散",
        "from": "T19n0949_001:0192c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三部重護身　　最後慈護印",
        "from": "T19n0949_001:0192c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮悔依前儀　　讀誦大乘典",
        "from": "T19n0949_001:0192c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意任經行　　常時莫間斷",
        "from": "T19n0949_001:0192c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂輪王要略一卷奇特最勝金輪佛頂念誦儀軌法要若不能誦向前大佛眼真言誦此心真言亦得佛眼小呪也。",
        "from": "T19n0949_001:0192c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱引喃引􇩂唵􈎭沒􇧺馱引􄙒路􄑼左􄖯𩕳引􅁥娑嚩二合引􄚩賀教舜􈃮二交了水壇法取新淨牛糞。",
        "from": "T19n0949_001:0192c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不食糟豆特。",
        "from": "T19n0949_001:0192c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犢子糞最第一。",
        "from": "T19n0949_001:0192c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得直用其生牛糞。",
        "from": "T19n0949_001:0192c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取新瓦鑵以汲淨水。",
        "from": "T19n0949_001:0192c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不用殘水。",
        "from": "T19n0949_001:0192c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫淨𭂭中。",
        "from": "T19n0949_001:0192c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以糞和水。",
        "from": "T19n0949_001:0192c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攪去其滓。",
        "from": "T19n0949_001:0192c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著檀香末。",
        "from": "T19n0949_001:0192c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取一柳枝。",
        "from": "T19n0949_001:0192c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手執。",
        "from": "T19n0949_001:0192c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執金剛杵及其數珠。",
        "from": "T19n0949_001:0192c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東坐誦佛頂心呪。",
        "from": "T19n0949_001:0192c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柳枝攪水。",
        "from": "T19n0949_001:0192c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪一百八遍。",
        "from": "T19n0949_001:0192c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持呪水器。",
        "from": "T19n0949_001:0192c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入道場中。",
        "from": "T19n0949_001:0192c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從東北角捕其香水。",
        "from": "T19n0949_001:0192c25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手摩地。",
        "from": "T19n0949_001:0192c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨日轉摩。",
        "from": "T19n0949_001:0192c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨摩隨乾。",
        "from": "T19n0949_001:0192c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令停水。",
        "from": "T19n0949_001:0192c26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道場內地一編摩訖。",
        "from": "T19n0949_001:0192c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至道場水四邊摩。",
        "from": "T19n0949_001:0192c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各一步地四角竪標結繩為界。",
        "from": "T19n0949_001:0192c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則名為佛頂三昧陀羅尼結界之地。",
        "from": "T19n0949_001:0192c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如一編摩。",
        "from": "T19n0949_001:0192c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二第三亦如是摩。",
        "from": "T19n0949_001:0192c30_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩地不得用殘香水。",
        "from": "T19n0949_001:0192c30_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日別取新淨牛糞。",
        "from": "T19n0949_001:0193a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前作用。",
        "from": "T19n0949_001:0193a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此水者。",
        "from": "T19n0949_001:0193a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則名佛頂三昧陀羅尼八功德水壇地乾竟。",
        "from": "T19n0949_001:0193a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　　　　　　　二校了",
        "from": "T19n0949_001:0193a03_0",
        "context_with_next_sentence": true
    }
]