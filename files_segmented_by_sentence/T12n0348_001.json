[
    {
        "source_sentence": "佛說大乘方等要慧經",
        "from": "T12n0348_001:0186b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後漢安息國三藏安世高譯",
        "from": "T12n0348_001:0186b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞如是：一時佛遊於舍衛國，爾時彌勒菩薩",
        "from": "T12n0348_001:0186b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叉手白佛言：",
        "from": "T12n0348_001:0186b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T12n0348_001:0186b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲小有所問，若世尊聽所問者乃敢陳之。",
        "from": "T12n0348_001:0186b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T12n0348_001:0186b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有所疑便問，吾當為汝解說，使意歡喜。",
        "from": "T12n0348_001:0186b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」彌勒問言：",
        "from": "T12n0348_001:0186b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何菩薩摩訶薩不退轉法，於大乘有進而不耗減，行菩薩道並降伏魔怨，如其狀貌，悉還教知諸法根之相，不厭於生死，自有正慧不從他受，疾成無上一切智地？",
        "from": "T12n0348_001:0186b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊讚曰：",
        "from": "T12n0348_001:0186b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉！",
        "from": "T12n0348_001:0186b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉！",
        "from": "T12n0348_001:0186b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所問隨順，甚善大佳，吾當為汝解說菩薩所得之行，踰於所問。",
        "from": "T12n0348_001:0186b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽！",
        "from": "T12n0348_001:0186b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善思念之！",
        "from": "T12n0348_001:0186b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」於是彌勒受教，一心靜聽。",
        "from": "T12n0348_001:0186b24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告彌勒：",
        "from": "T12n0348_001:0186b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「菩薩有八法具足，疾逮得無上一切智地。",
        "from": "T12n0348_001:0186b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂為八？",
        "from": "T12n0348_001:0186b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、內性清淨。",
        "from": "T12n0348_001:0186b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、所行成就。",
        "from": "T12n0348_001:0186b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、所施成就。",
        "from": "T12n0348_001:0186b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、所願成就。",
        "from": "T12n0348_001:0186b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、慈成就。",
        "from": "T12n0348_001:0186b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者、悲成就。",
        "from": "T12n0348_001:0186b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者、善權成就。",
        "from": "T12n0348_001:0186b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者、智慧成就。",
        "from": "T12n0348_001:0186b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為八事。",
        "from": "T12n0348_001:0186b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩疾逮得無上一切智。",
        "from": "T12n0348_001:0186b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」彌勒菩薩及諸眾會皆歡喜。",
        "from": "T12n0348_001:0186c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘方等要慧經",
        "from": "T12n0348_001:0186c02_100",
        "context_with_next_sentence": false
    }
]