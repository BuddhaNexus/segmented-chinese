[
    {
        "source_sentence": "佛頂尊勝陀羅尼經",
        "from": "T19n0968_001:0353a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐京兆杜行顗奉　詔譯",
        "from": "T19n0968_001:0353a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首一切智。",
        "from": "T19n0968_001:0353a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T19n0968_001:0353a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國祇樹給孤獨園。",
        "from": "T19n0968_001:0353a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾八千人俱。",
        "from": "T19n0968_001:0353a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩三萬二千。",
        "from": "T19n0968_001:0353a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逮得正智照明諸法。",
        "from": "T19n0968_001:0353a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於知所知了無罣礙。",
        "from": "T19n0968_001:0353a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰觀自在菩薩得大趣菩薩。",
        "from": "T19n0968_001:0353a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩文殊師利童真菩薩。",
        "from": "T19n0968_001:0353a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華勝藏菩薩手金剛菩薩。",
        "from": "T19n0968_001:0353a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持地菩薩虛空藏菩薩。",
        "from": "T19n0968_001:0353a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切障菩薩普賢菩薩而為上首。",
        "from": "T19n0968_001:0353a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等三萬二千菩薩摩訶薩眾。",
        "from": "T19n0968_001:0353a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有萬梵摩天。",
        "from": "T19n0968_001:0353a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善吒梵摩而為上首。",
        "from": "T19n0968_001:0353a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從餘生界來詣佛所俱在會集。",
        "from": "T19n0968_001:0353a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有萬二千諸釋天眾。",
        "from": "T19n0968_001:0353a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與無量天龍夜叉乾闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人等俱來在會。",
        "from": "T19n0968_001:0353a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聖尊四眾圍繞。",
        "from": "T19n0968_001:0353a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬供養而為說法。",
        "from": "T19n0968_001:0353a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時三十三天善法場中有天名善住。",
        "from": "T19n0968_001:0353a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處大寶宮盛縱歡樂。",
        "from": "T19n0968_001:0353a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妓麗侍奉嬉戲馳遊。",
        "from": "T19n0968_001:0353a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀覽娛情悉暢所欲。",
        "from": "T19n0968_001:0353a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽夜有聲呼天善住。",
        "from": "T19n0968_001:0353a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝終期至七日當死。",
        "from": "T19n0968_001:0353a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七生閻浮入於地獄。",
        "from": "T19n0968_001:0353a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後或為人貧窮生盲。",
        "from": "T19n0968_001:0353a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸苦惱。",
        "from": "T19n0968_001:0353a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住聞已恐怖驚惶毛竪憂愁。",
        "from": "T19n0968_001:0353a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急詣釋提桓因天帝之所。",
        "from": "T19n0968_001:0353a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前禮帝足荒懼白帝。",
        "from": "T19n0968_001:0353a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請帝垂哀。",
        "from": "T19n0968_001:0353a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救我苦厄救我苦厄。",
        "from": "T19n0968_001:0353a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我受天樂縱心適意。",
        "from": "T19n0968_001:0353a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽有聲言七日命終。",
        "from": "T19n0968_001:0353a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七生閻浮當入地獄。",
        "from": "T19n0968_001:0353a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後或為人貧窮生盲受諸苦惱。",
        "from": "T19n0968_001:0353a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今煩荒心迷識亂計不知出。",
        "from": "T19n0968_001:0353a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟帝悲愍拔救苦毒。",
        "from": "T19n0968_001:0353b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因聞是語已。",
        "from": "T19n0968_001:0353b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深懷怪悼云何七生。",
        "from": "T19n0968_001:0353b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默寂須臾遂見善住。",
        "from": "T19n0968_001:0353b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此命終便愛猪身。",
        "from": "T19n0968_001:0353b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猪身畢已受於狗身。",
        "from": "T19n0968_001:0353b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狗身畢已受於狐身。",
        "from": "T19n0968_001:0353b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狐身畢已受於猴身。",
        "from": "T19n0968_001:0353b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猴身畢已受毒蛇身。",
        "from": "T19n0968_001:0353b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蛇身畢已當受鷲身。",
        "from": "T19n0968_001:0353b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鷲身畢已受於烏身。",
        "from": "T19n0968_001:0353b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是七生恒食穢惡。",
        "from": "T19n0968_001:0353b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因見是事已。",
        "from": "T19n0968_001:0353b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深哀善住當受大苦。",
        "from": "T19n0968_001:0353b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何計何從誰能救濟。",
        "from": "T19n0968_001:0353b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是思惟唯除如來阿羅訶三藐三佛陀無能救者。",
        "from": "T19n0968_001:0353b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是天帝其夜後分。",
        "from": "T19n0968_001:0353b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齎諸華鬘種種諸香末香燒香。",
        "from": "T19n0968_001:0353b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天衣瓔珞諸莊嚴具。",
        "from": "T19n0968_001:0353b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣於祇林佛聖尊所。",
        "from": "T19n0968_001:0353b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮雙足右繞七匝大供養已。",
        "from": "T19n0968_001:0353b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便於佛前一面而坐。",
        "from": "T19n0968_001:0353b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以善住事具白聖尊。",
        "from": "T19n0968_001:0353b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時如來頂放大光。",
        "from": "T19n0968_001:0353b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光雜色流照十方一切生界。",
        "from": "T19n0968_001:0353b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還至佛所右繞三匝從佛口入。",
        "from": "T19n0968_001:0353b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛遂微笑告釋提桓因。",
        "from": "T19n0968_001:0353b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛灌頂清淨諸趣佛頂尊勝陀羅尼。",
        "from": "T19n0968_001:0353b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨除一切業障地獄畜生。",
        "from": "T19n0968_001:0353b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻摩盧迦生死苦惱。",
        "from": "T19n0968_001:0353b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破地獄道升於佛路。",
        "from": "T19n0968_001:0353b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此清淨諸趣佛頂尊勝陀羅尼。",
        "from": "T19n0968_001:0353b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但聽聞者生死相續一切業障。",
        "from": "T19n0968_001:0353b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種苦患咸悉消滅。",
        "from": "T19n0968_001:0353b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲善果得宿命智。",
        "from": "T19n0968_001:0353b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一佛國生一佛國。",
        "from": "T19n0968_001:0353b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一天中生一天中。",
        "from": "T19n0968_001:0353b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至三十三天宮常知宿命。",
        "from": "T19n0968_001:0353b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能習持者。",
        "from": "T19n0968_001:0353b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現百年限更增其壽。",
        "from": "T19n0968_001:0353b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意淨心寧適樂。",
        "from": "T19n0968_001:0353b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身苦咸除獲諸善觸。",
        "from": "T19n0968_001:0353b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛觀視諸天衛護。",
        "from": "T19n0968_001:0353b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩慈愛繫念。",
        "from": "T19n0968_001:0353b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦之者一切地獄畜生。",
        "from": "T19n0968_001:0353b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻摩盧迦及諸餓鬼。",
        "from": "T19n0968_001:0353b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息除消散境域空虛。",
        "from": "T19n0968_001:0353b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛剎菩薩天宮。",
        "from": "T19n0968_001:0353b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸闢福門導之令入。",
        "from": "T19n0968_001:0353b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是釋提桓因前白佛言聖尊。",
        "from": "T19n0968_001:0353b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憐愍攝護一切眾生。",
        "from": "T19n0968_001:0353b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願為說清淨諸趣佛頂尊勝陀羅尼。",
        "from": "T19n0968_001:0353b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聖尊受天帝請。",
        "from": "T19n0968_001:0353b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T19n0968_001:0353b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南謨薄伽上婆帝底嚟二合盧吉夜翊可反二合鉢羅上二合底都里反下同毘上始瑟吒夜翊可反下同勃陀夜一云歸命聖尊三界勝覺怛姪徒列反他二烏牟半音三毘輸陀上重夜麼麼麼麼云某甲受持者於此自稱名娑上曼多皤上婆重娑上馺叵二合囉上拏上伽底伽上訶上那瑣婆重皤上舜入提五阿上毘上重瑟者夜二合素上伽上多上婆上者那蜜㗚二合多毘上重訕疏皆反罽平六阿訶上囉上阿訶上囉上七阿愈珊陀重囉上尼上八輸陀上重夜輸陀上重夜九伽上伽上那毘上舜入提重十烏瑟尼二合沙疏我反毘上闍上夜舜入提重十一娑上訶上娑囉上二合囉濕弭三朱長地上低十二薩囉皤上二合多上他伽上多地上重瑟姹丑遐反二合那地上重瑟祉低十三阿上地哩二合跋闍囉上二合迦夜僧訶上多上那上舜入提重十四薩囉皤二合皤上囉上拏上毘上舜入提重十五鉢囉上二合夜儞夜多上婆上重夜十六阿愈舜入提十七娑上麼耶余他反地上重瑟祉二合低十八麼儞麼儞麼麼儞十九多上他上多菩重多俱知上跛唎上舜入提重二十毘上娑普二合吒上勃地上舜入提重二十一闍上夜闍上夜二十二毘上闍上夜毘上闍上夜二十三娑麼二合囉上娑麼二合囉上二十四勃陀地上重瑟祉二合多上舜入提重二十五跋闍嚟二合跋闍囉上二合揭囉鞞重二十六二合跋闍藍二合婆上重皤上覩麼麼二十七麼麼云某甲受持者於此自稱名麼訶耶那上鉢羅上二合婆上重迦夜毘上舜入提重二十八薩囉皤上二合伽上底跛唎舜入提重二十九薩囉皤上二合多伽多娑上摩戍阿二合娑地上重瑟祉二合低三十勃陀重夜二合勃陀重夜二合三十一毘上菩長陀上重夜三十二娑上曼多跛唎上舜入提重三十三薩囉皤上二合多上他伽上多地上重瑟奼丑遐反二合那地上重瑟祉二合低三十四莎訶三十五注平上去入者從四聲法借音讀注半音者半聲讀注二合者半上字連聲讀注重者帶喉聲重讀注長者長聲讀注反者從反借音讀羅利盧栗黎藍等字傍加口者轉聲讀天帝此清淨諸趣佛頂尊勝陀羅尼。",
        "from": "T19n0968_001:0354a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨諸罪障除諸惡趣。",
        "from": "T19n0968_001:0354a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十八俱胝百千恒河沙諸佛。",
        "from": "T19n0968_001:0354a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所共宣說守護喜讚。",
        "from": "T19n0968_001:0354a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來智印印之。",
        "from": "T19n0968_001:0354a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為除一切眾惡趣故。",
        "from": "T19n0968_001:0354a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切地獄畜生閻摩盧迦。",
        "from": "T19n0968_001:0354a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸罪惡類沈溺苦海。",
        "from": "T19n0968_001:0354a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸痛毒為解脫故。",
        "from": "T19n0968_001:0354a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸短壽薄福下陋。",
        "from": "T19n0968_001:0354a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卑賤惡業諸眾生故。",
        "from": "T19n0968_001:0354a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趣於地獄種種生類夭折失心。",
        "from": "T19n0968_001:0354a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡背正路諸眾生故。",
        "from": "T19n0968_001:0354a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼行閻浮提。",
        "from": "T19n0968_001:0354a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨除罪業令歸解脫。",
        "from": "T19n0968_001:0354a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝汝當持此尊勝陀羅尼為善住說。",
        "from": "T19n0968_001:0354a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為閻浮眾生諸天天子一切含識。",
        "from": "T19n0968_001:0354a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣揚讀誦思惟習念。",
        "from": "T19n0968_001:0354a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬供養受持修行。",
        "from": "T19n0968_001:0354a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今以陀羅尼印教約。",
        "from": "T19n0968_001:0354a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付囑天帝汝當善持聞此陀羅尼者。",
        "from": "T19n0968_001:0354a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千劫中。",
        "from": "T19n0968_001:0354a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所積業障咸得清淨。",
        "from": "T19n0968_001:0354a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮地獄不生畜生。",
        "from": "T19n0968_001:0354a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻摩盧迦餓鬼惡趣。",
        "from": "T19n0968_001:0354a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不受阿修羅夜叉羅剎。",
        "from": "T19n0968_001:0354a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及富丹那迦吒富丹那癲等鬼神之身。",
        "from": "T19n0968_001:0354a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至犬龜鳥獸蚊虻毒蛇腹行之類。",
        "from": "T19n0968_001:0354a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸小蟲不復更受。",
        "from": "T19n0968_001:0354a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒與佛俱或生菩薩勝族。",
        "from": "T19n0968_001:0354a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生婆羅門大姓剎利大姓居士大家。",
        "from": "T19n0968_001:0354a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此陀羅尼力得清淨生。",
        "from": "T19n0968_001:0354a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至坐菩提獲正遍覺。",
        "from": "T19n0968_001:0354a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此清淨諸趣尊勝陀羅尼。",
        "from": "T19n0968_001:0354a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威神廣大具大功果。",
        "from": "T19n0968_001:0354a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大力能是大吉祥。",
        "from": "T19n0968_001:0354a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日藏寶珠皎潔無垢淨若虛空。",
        "from": "T19n0968_001:0354a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所在之處光明照朗。",
        "from": "T19n0968_001:0354a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼所置之處。",
        "from": "T19n0968_001:0354a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威神洽被亦復如是。",
        "from": "T19n0968_001:0354a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持此陀羅尼者。",
        "from": "T19n0968_001:0354a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪惡皆不能染。",
        "from": "T19n0968_001:0354a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柔和潤澤清淨無垢如閻浮檀金。",
        "from": "T19n0968_001:0354a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫讀習誦念供養。",
        "from": "T19n0968_001:0354a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持修行此陀羅尼者。",
        "from": "T19n0968_001:0354b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此處地獄業除諸趣咸淨。",
        "from": "T19n0968_001:0354b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此陀羅尼安置幢上。",
        "from": "T19n0968_001:0354b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹於高山或高屋上。",
        "from": "T19n0968_001:0354b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘高處或浮圖中。",
        "from": "T19n0968_001:0354b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若比丘比丘尼優婆塞優婆夷善男子善女人等。",
        "from": "T19n0968_001:0354b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見此陀羅尼幢。",
        "from": "T19n0968_001:0354b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若近幢若幢影霑身若幢風吹身。",
        "from": "T19n0968_001:0354b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為幢風飄塵著身。",
        "from": "T19n0968_001:0354b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪業便消。",
        "from": "T19n0968_001:0354b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生地獄畜生閻摩盧迦餓鬼阿修羅中。",
        "from": "T19n0968_001:0354b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮諸惡趣一切如來諸佛當與授記。",
        "from": "T19n0968_001:0354b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得不退轉至登正覺。",
        "from": "T19n0968_001:0354b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種華香。",
        "from": "T19n0968_001:0354b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種諸鬘種種幢繖。",
        "from": "T19n0968_001:0354b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幡蓋瓔珞諸莊嚴具。",
        "from": "T19n0968_001:0354b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸塗飾修大供養。",
        "from": "T19n0968_001:0354b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四衢道造塔。",
        "from": "T19n0968_001:0354b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置此陀羅尼行道頂禮。",
        "from": "T19n0968_001:0354b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此輩是摩訶薩。",
        "from": "T19n0968_001:0354b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛之法子法之梁柱舍利之塔。",
        "from": "T19n0968_001:0354b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時閻摩法王。",
        "from": "T19n0968_001:0354b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夜將曉來詣佛所。",
        "from": "T19n0968_001:0354b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種天華種種諸香。",
        "from": "T19n0968_001:0354b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雜香燒香天衣瓔珞。",
        "from": "T19n0968_001:0354b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修大供養右繞七匝。",
        "from": "T19n0968_001:0354b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮佛足白佛言聖尊。",
        "from": "T19n0968_001:0354b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我知佛恩非不知恩。",
        "from": "T19n0968_001:0354b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為報佛恩故擁護一切。",
        "from": "T19n0968_001:0354b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常勤奉事此大威力大功果陀羅尼。",
        "from": "T19n0968_001:0354b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉地獄門淨諸惡趣。",
        "from": "T19n0968_001:0354b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王繞佛三匝前白佛言。",
        "from": "T19n0968_001:0354b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願聖尊說此陀羅尼修行之法。",
        "from": "T19n0968_001:0354b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告四天王諦聽諦聽我今當說。",
        "from": "T19n0968_001:0354b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有命短求長壽者。",
        "from": "T19n0968_001:0354b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於白月十五日澡浴清淨。",
        "from": "T19n0968_001:0354b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著淨潔衣受八戒齋。",
        "from": "T19n0968_001:0354b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此陀羅尼千遍。",
        "from": "T19n0968_001:0354b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸障便除病愈壽增獲大安樂。",
        "from": "T19n0968_001:0354b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄畜生諸惡趣苦咸悉解脫。",
        "from": "T19n0968_001:0354b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至畜生諸惡趣類。",
        "from": "T19n0968_001:0354b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳得聞此陀羅尼者。",
        "from": "T19n0968_001:0354b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便復不受惡趣之身。",
        "from": "T19n0968_001:0354b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嬰纏重病者病皆消散諸趣清淨。",
        "from": "T19n0968_001:0354b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生現樂界。",
        "from": "T19n0968_001:0354b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華化生不受胎藏常知宿命。",
        "from": "T19n0968_001:0354b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸眾生罪業所牽。",
        "from": "T19n0968_001:0354b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生於惡趣。",
        "from": "T19n0968_001:0354b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以此陀羅尼呪土二十一遍。",
        "from": "T19n0968_001:0354b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散其骸骨之上隨其所生若地獄若畜生。",
        "from": "T19n0968_001:0354c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或閻摩盧迦或餓鬼趣。",
        "from": "T19n0968_001:0354c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至阿鼻地獄禽獸蜫蟲。",
        "from": "T19n0968_001:0354c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸謝苦身生天受樂。",
        "from": "T19n0968_001:0354c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日誦此陀羅尼二十一遍。",
        "from": "T19n0968_001:0354c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪滅福增眾人愛敬。",
        "from": "T19n0968_001:0354c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生極樂國。",
        "from": "T19n0968_001:0354c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常念持此陀羅尼。",
        "from": "T19n0968_001:0354c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生諸淨土。",
        "from": "T19n0968_001:0354c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一佛國至一佛國。",
        "from": "T19n0968_001:0354c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛剎作大光照。",
        "from": "T19n0968_001:0354c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與佛俱諸佛護育而與授記。",
        "from": "T19n0968_001:0354c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至獲證大涅槃樂。",
        "from": "T19n0968_001:0354c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行此陀羅尼者。",
        "from": "T19n0968_001:0354c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當作方壇四面正等。",
        "from": "T19n0968_001:0354c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散種種淨華燒種種香。",
        "from": "T19n0968_001:0354c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝輪著地長跪一心。",
        "from": "T19n0968_001:0354c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普念十方一切諸佛。",
        "from": "T19n0968_001:0354c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作合十指爪印當於心上。",
        "from": "T19n0968_001:0354c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指二大拇指各相屈按。",
        "from": "T19n0968_001:0354c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱娑度云善哉誦此陀羅尼一百八遍。",
        "from": "T19n0968_001:0354c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為供養承事八十八俱胝恒河沙那由他百千諸佛。",
        "from": "T19n0968_001:0354c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛供養而作供養。",
        "from": "T19n0968_001:0354c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為供養四大天王。",
        "from": "T19n0968_001:0354c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切讚善稱是佛子。",
        "from": "T19n0968_001:0354c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大菩提莊嚴其心獲無礙智。",
        "from": "T19n0968_001:0354c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡欲誦念此陀羅尼者。",
        "from": "T19n0968_001:0354c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當至心如法作合十指爪印。",
        "from": "T19n0968_001:0354c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為修行陀羅尼法。",
        "from": "T19n0968_001:0354c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告釋提桓因。",
        "from": "T19n0968_001:0354c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝當以此法救除眾生。",
        "from": "T19n0968_001:0354c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄諸趣一切苦惱。",
        "from": "T19n0968_001:0354c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨諸趣業獲長壽果。",
        "from": "T19n0968_001:0354c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝當還可授善住天子此陀羅尼。",
        "from": "T19n0968_001:0354c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿七日已汝共善住來至我所。",
        "from": "T19n0968_001:0354c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因受佛教已還於天宮。",
        "from": "T19n0968_001:0354c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此佛頂尊勝陀羅尼。",
        "from": "T19n0968_001:0354c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授善住天子。",
        "from": "T19n0968_001:0354c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住受已修行供養六日六夜。",
        "from": "T19n0968_001:0354c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰至七日諸惡趣業皆得解脫。",
        "from": "T19n0968_001:0354c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居天福處獲大長壽。",
        "from": "T19n0968_001:0354c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜踊躍大聲唱言。",
        "from": "T19n0968_001:0354c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿呼佛陀耶阿呼達摩耶阿呼僧伽耶阿呼毘耶陀云陀羅尼救拔眾生一切苦厄。",
        "from": "T19n0968_001:0354c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我得脫諸惡趣苦。",
        "from": "T19n0968_001:0354c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天帝釋提桓因部屬侍繞。",
        "from": "T19n0968_001:0354c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將善住天子齎種種華香。",
        "from": "T19n0968_001:0354c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香塗香并種種鬘。",
        "from": "T19n0968_001:0354c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋繖幡幢衣服瓔珞。",
        "from": "T19n0968_001:0355a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘天寶輅備天莊嚴。",
        "from": "T19n0968_001:0355a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來至佛所作大供養右繞萬匝便。",
        "from": "T19n0968_001:0355a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛前一面而立。",
        "from": "T19n0968_001:0355a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌讚佛已退坐聽法。",
        "from": "T19n0968_001:0355a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛申金色右手。",
        "from": "T19n0968_001:0355a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慰護善住而與授記。",
        "from": "T19n0968_001:0355a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛頂尊勝陀羅尼經",
        "from": "T19n0968_001:0355a05_100",
        "context_with_next_sentence": false
    }
]