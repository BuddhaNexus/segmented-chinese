[
    {
        "source_sentence": "大雲經祈雨壇法",
        "from": "T19n0990_001:0492c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天亢旱時。欲祈請雨者。於露地作壇。除",
        "from": "T19n0990_001:0492c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去瓦礫及諸穢物。張設青幕。懸青幡。香泥",
        "from": "T19n0990_001:0492c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗拭作一方壇。",
        "from": "T19n0990_001:0492c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇中畫七寶水池。",
        "from": "T19n0990_001:0492c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "池中畫海龍王宮。",
        "from": "T19n0990_001:0493a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於龍宮中有釋迦牟尼如來經說法相。",
        "from": "T19n0990_001:0493a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛右畫觀自在菩薩。",
        "from": "T19n0990_001:0493a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛左畫金剛手菩薩等侍衛。",
        "from": "T19n0990_001:0493a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛前右畫三千大千世界主輪蓋龍王。",
        "from": "T19n0990_001:0493a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛前左畫難陀跋難陀二龍王。",
        "from": "T19n0990_001:0493a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇四方。",
        "from": "T19n0990_001:0493a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用瞿摩夷汁各畫一龍王。",
        "from": "T19n0990_001:0493a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於東方畫一龍王。",
        "from": "T19n0990_001:0493a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一身三頭。",
        "from": "T19n0990_001:0493a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量長三肘。",
        "from": "T19n0990_001:0493a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并眷屬圍繞。",
        "from": "T19n0990_001:0493a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於南方畫一龍王。",
        "from": "T19n0990_001:0493a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一身五頭。",
        "from": "T19n0990_001:0493a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量長五肘。",
        "from": "T19n0990_001:0493a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸眷屬。",
        "from": "T19n0990_001:0493a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於西方畫一龍王。",
        "from": "T19n0990_001:0493a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一身七頭。",
        "from": "T19n0990_001:0493a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量長七肘。",
        "from": "T19n0990_001:0493a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并眷屬圍繞。",
        "from": "T19n0990_001:0493a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於北方又畫一龍王。",
        "from": "T19n0990_001:0493a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一身九頭。",
        "from": "T19n0990_001:0493a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量長九肘。",
        "from": "T19n0990_001:0493a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并眷屬圍繞。",
        "from": "T19n0990_001:0493a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆在靉靆青黑雲中。",
        "from": "T19n0990_001:0493a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "半身已下如蛇形。",
        "from": "T19n0990_001:0493a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尾在池中。",
        "from": "T19n0990_001:0493a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "半身已上如菩薩形。",
        "from": "T19n0990_001:0493a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆合掌從池涌出。",
        "from": "T19n0990_001:0493a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇四角。",
        "from": "T19n0990_001:0493a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置四清水瓶。",
        "from": "T19n0990_001:0493a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其力分。",
        "from": "T19n0990_001:0493a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食菓子等皆染作青色。",
        "from": "T19n0990_001:0493a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以慇淨心布列供養。",
        "from": "T19n0990_001:0493a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香散青色華。",
        "from": "T19n0990_001:0493a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道場中所用皆作青色。",
        "from": "T19n0990_001:0493a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祈雨之人若是出家苾芻。",
        "from": "T19n0990_001:0493a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應具律儀。",
        "from": "T19n0990_001:0493a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若俗士應受八戒。",
        "from": "T19n0990_001:0493a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法之時。",
        "from": "T19n0990_001:0493a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喫三白食。",
        "from": "T19n0990_001:0493a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日香湯沐浴。",
        "from": "T19n0990_001:0493a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著新淨青衣。",
        "from": "T19n0990_001:0493a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇西面。",
        "from": "T19n0990_001:0493a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以青物為座。",
        "from": "T19n0990_001:0493a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以香塗手。",
        "from": "T19n0990_001:0493a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應三密加持自身。",
        "from": "T19n0990_001:0493a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及護壇場。",
        "from": "T19n0990_001:0493a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案上置此大雲經。",
        "from": "T19n0990_001:0493a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切有情起大慈悲心。",
        "from": "T19n0990_001:0493a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至誠請一切佛菩薩加持。",
        "from": "T19n0990_001:0493a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜虔誠。",
        "from": "T19n0990_001:0493a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀此大雲經。",
        "from": "T19n0990_001:0493a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或二人三人乃至七人更替讀誦。",
        "from": "T19n0990_001:0493a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經聲不應間斷。",
        "from": "T19n0990_001:0493a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亢旱之時。",
        "from": "T19n0990_001:0493a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是依法讀此大雲經。",
        "from": "T19n0990_001:0493a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或經一日二日乃至七日。",
        "from": "T19n0990_001:0493a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定降注甘雨。",
        "from": "T19n0990_001:0493a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若災重不雨。",
        "from": "T19n0990_001:0493a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更作必降甘雨。",
        "from": "T19n0990_001:0493a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使大海或有過限越潮。",
        "from": "T19n0990_001:0493a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依此經作法轉讀。",
        "from": "T19n0990_001:0493a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不應効。",
        "from": "T19n0990_001:0493a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應發願讀經所生功德迴向諸龍。",
        "from": "T19n0990_001:0493a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願皆離諸苦難。",
        "from": "T19n0990_001:0493a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發無上菩提心。",
        "from": "T19n0990_001:0493a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切有情降注甘雨。",
        "from": "T19n0990_001:0493a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大雲經祈雨壇法",
        "from": "T19n0990_001:0493a29_100",
        "context_with_next_sentence": false
    }
]