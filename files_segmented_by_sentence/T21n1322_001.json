[
    {
        "source_sentence": "新集浴像儀軌一卷",
        "from": "T21n1322_001:0488b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧琳述",
        "from": "T21n1322_001:0488b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西國五印度僧眾住持稍加嚴麗。或居伽藍",
        "from": "T21n1322_001:0488b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺宇蘭若僧園。",
        "from": "T21n1322_001:0488b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日浴像焚香採眾名華。",
        "from": "T21n1322_001:0488b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布散供養禮拜讚佛。",
        "from": "T21n1322_001:0488b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔誠恭敬旋遶。",
        "from": "T21n1322_001:0488b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日如是。",
        "from": "T21n1322_001:0488b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精勤畢命為期無替。",
        "from": "T21n1322_001:0488b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日清晨若不修此供養誓不自食。",
        "from": "T21n1322_001:0488c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近諸國共同無有不作之處。",
        "from": "T21n1322_001:0488c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋是眾僧修持常敬奉者也。",
        "from": "T21n1322_001:0488c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像唯除土木彩畫不可浴之。",
        "from": "T21n1322_001:0488c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是金銀寶玉銅鑞鍮石如是等像悉堪常浴。",
        "from": "T21n1322_001:0488c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡擬明旦所用浴像香水。",
        "from": "T21n1322_001:0488c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今夕各別浸香細擣絹包經宵水浸。",
        "from": "T21n1322_001:0488c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是諸香皆堪浴像。",
        "from": "T21n1322_001:0488c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一味香水各別一瓶。",
        "from": "T21n1322_001:0488c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不以多香和雜一處。",
        "from": "T21n1322_001:0488c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其瓶可用不受觸者為佳。",
        "from": "T21n1322_001:0488c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂金銀諸寶鐵銅鉛鑞白淨瓷瓶無破損者是也。",
        "from": "T21n1322_001:0488c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆須磨洗令其光淨。",
        "from": "T21n1322_001:0488c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上題香水名號次第輪用。",
        "from": "T21n1322_001:0488c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如貧無者可取未曾經用新淨石瓦木瓶以充其事。",
        "from": "T21n1322_001:0488c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不得雜用即成穢觸。",
        "from": "T21n1322_001:0488c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受得用盛浴像已了香水。",
        "from": "T21n1322_001:0488c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行此法者於淨觸行護威儀。",
        "from": "T21n1322_001:0488c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最須精細作意。",
        "from": "T21n1322_001:0488c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸供養器物準此應知。",
        "from": "T21n1322_001:0488c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至灌浴之時灑掃堂殿。",
        "from": "T21n1322_001:0488c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於寬淨之處以淨牛糞塗一大壇徑可一丈。",
        "from": "T21n1322_001:0488c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置一宣臺於壇中。",
        "from": "T21n1322_001:0488c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上安一大器物。",
        "from": "T21n1322_001:0488c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中施一臺子上安尊像傍置一床。",
        "from": "T21n1322_001:0488c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "油單覆上諸香水瓶次第行列。",
        "from": "T21n1322_001:0488c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五種法供養物。",
        "from": "T21n1322_001:0488c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百索長線新淨軟帛墼等物羅列於上。",
        "from": "T21n1322_001:0488c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾既集已。",
        "from": "T21n1322_001:0488c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共請明法阿闍梨。",
        "from": "T21n1322_001:0488c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或舉眾中最尊上座。",
        "from": "T21n1322_001:0488c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眾稱誦浴像經中啟白發願大乘妙偈。",
        "from": "T21n1322_001:0488c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句句眾人普皆隨誦偈曰。",
        "from": "T21n1322_001:0488c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今灌沐諸如來　　淨智功德莊嚴聚",
        "from": "T21n1322_001:0488c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願彼五濁群生類　　速證如來淨法身",
        "from": "T21n1322_001:0488c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒定慧解知見香　　遍十方剎常芬馥",
        "from": "T21n1322_001:0488c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願彼香煙亦如是　　無量無邊作佛事",
        "from": "T21n1322_001:0488c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦願三途苦輪息　　普令除熱得清涼",
        "from": "T21n1322_001:0488c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆發無上菩提心　　亦出愛河登彼岸",
        "from": "T21n1322_001:0488c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又令一人手執香爐虔恭䠒跪。",
        "from": "T21n1322_001:0488c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵音稱誦三歸依讚。",
        "from": "T21n1322_001:0488c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每句眾人作禮一拜。",
        "from": "T21n1322_001:0488c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚曰。",
        "from": "T21n1322_001:0488c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨母馱引野虞囉吠引一曩謨達麼鼻音引野多去以寧二禮娜莫僧去伽去引野摩賀帝三禮底哩二合毘喻二合引比娑去多上單娜莫四禮又令二人吹螺二人誦讚。",
        "from": "T21n1322_001:0489a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種雅樂絲竹絃歌一時俱作。",
        "from": "T21n1322_001:0489a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨親捧水瓶灌沐佛像。",
        "from": "T21n1322_001:0489a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取彼長線一頭繫瓶垂下。",
        "from": "T21n1322_001:0489a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾中人人捧線合掌當心。",
        "from": "T21n1322_001:0489a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專注虔誠稱念諸佛。",
        "from": "T21n1322_001:0489a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有不及捧其線者。",
        "from": "T21n1322_001:0489a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可取執前人身長衣。",
        "from": "T21n1322_001:0489a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意如各各躬親自浴佛像之像也。",
        "from": "T21n1322_001:0489a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至香水瓶次第傾盡一遍。",
        "from": "T21n1322_001:0489a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即須替換。",
        "from": "T21n1322_001:0489a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浴了佛像更安。",
        "from": "T21n1322_001:0489a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未浴遍者。",
        "from": "T21n1322_001:0489a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又更各添本類香水如前灌沐。",
        "from": "T21n1322_001:0489a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其吹螺誦讚及以樂音直至浴遍。",
        "from": "T21n1322_001:0489a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有尊像方暫停息。",
        "from": "T21n1322_001:0489a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既灌洗了。",
        "from": "T21n1322_001:0489a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便以淨帛揩拭令乾。",
        "from": "T21n1322_001:0489a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於床上依位行列。",
        "from": "T21n1322_001:0489a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即取塗香人人各以無名指頭搵取翹指當心。",
        "from": "T21n1322_001:0489a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨稱誦獻塗香真言。",
        "from": "T21n1322_001:0489a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句句眾人齊聲誦。",
        "from": "T21n1322_001:0489a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至末句。",
        "from": "T21n1322_001:0489a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時向佛遙彈奉獻作一拜。",
        "from": "T21n1322_001:0489a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻塗香真言曰。",
        "from": "T21n1322_001:0489a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗去引誐多一巘馱引布惹引二謎伽去娑上母捺囉二合三娑頗二合羅拏鼻去引四三摩鼻曳平吽引又取華盤。",
        "from": "T21n1322_001:0489a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者與眾人。",
        "from": "T21n1322_001:0489a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各捧一華如前齊誦獻華真言。",
        "from": "T21n1322_001:0489a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛遙散奉華真言曰。",
        "from": "T21n1322_001:0489a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗引去誐多一補澁跛二合布惹二謎伽去三去母捺囉二合三娑頗二合囉拏三去麼鼻曳平吽引阿闍梨次執香鑪。",
        "from": "T21n1322_001:0489a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其左右及以眾人互執身衣。",
        "from": "T21n1322_001:0489a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊誦焚香真言普心奉獻。",
        "from": "T21n1322_001:0489a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1322_001:0489a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗引去誐多一度引波布引惹引二謎伽去三母捺囉三合娑頗二合囉拏鼻三去麼鼻曳平吽引阿闍梨又捧甜脆餅盤。",
        "from": "T21n1322_001:0489b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前稱誦獻食真言。",
        "from": "T21n1322_001:0489b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠心奉獻。",
        "from": "T21n1322_001:0489b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1322_001:0489b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗去引誐多一沫莫可切里布引惹引二謎伽去三去母捺囉二合娑頗二合囉拏鼻三去麼曳平吽引次捧燭臺誦奉燈真言一遍真言曰。",
        "from": "T21n1322_001:0489b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗去引誐多一儞泥一切比野二合布惹引二謎引伽去三去母捺囉二合娑頗二合羅拏鼻三去麼曳平吽引又令誦讚人人。",
        "from": "T21n1322_001:0489b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執香爐高聲誦浴像妙讚。",
        "from": "T21n1322_001:0489b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚曰其文廣不能具載并誦五讚文多故不載。",
        "from": "T21n1322_001:0489b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各虔跪一偈一禮。",
        "from": "T21n1322_001:0489b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌浴供養既已周備。",
        "from": "T21n1322_001:0489b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨取彼浴佛香水。",
        "from": "T21n1322_001:0489b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瀝自頂上及灑大眾人人頭上。",
        "from": "T21n1322_001:0489b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是洗浴眾聖萬德莊嚴吉祥福水。",
        "from": "T21n1322_001:0489b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "霑灑身上并飲少多。",
        "from": "T21n1322_001:0489b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令身中煩惱消薄。",
        "from": "T21n1322_001:0489b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸次成就無上菩提。",
        "from": "T21n1322_001:0489b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾一時虔誠作禮。",
        "from": "T21n1322_001:0489b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然更吹螺并誦行願吉祥等讚。",
        "from": "T21n1322_001:0489b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "音聲絲竹引眾先行。",
        "from": "T21n1322_001:0489b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨日左轉尊卑倫次旋行道三匝七匝。",
        "from": "T21n1322_001:0489b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意所宜各誦大乘經中讚佛妙偈。",
        "from": "T21n1322_001:0489b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法事既畢禮拜辭佛。",
        "from": "T21n1322_001:0489b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人擎一尊送本處。",
        "from": "T21n1322_001:0489b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則西方浴像常法。",
        "from": "T21n1322_001:0489b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後眾僧上堂方受其食。",
        "from": "T21n1322_001:0489b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼悲哉此方寂無知者。",
        "from": "T21n1322_001:0489b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且佛像終身不曾一浴。",
        "from": "T21n1322_001:0489b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煙熏塵坌烏鼠穢污。",
        "from": "T21n1322_001:0489b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉國皆然無能曉悟。",
        "from": "T21n1322_001:0489b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有浴者祖習愚情。",
        "from": "T21n1322_001:0489b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別造一裸體尊容立於水器之內。",
        "from": "T21n1322_001:0489b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以小扚洗。",
        "from": "T21n1322_001:0489b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須慢心獻弄。",
        "from": "T21n1322_001:0489b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊無敬重之意反招輕忽之罪。",
        "from": "T21n1322_001:0489b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀哉不知敬田福之大也。",
        "from": "T21n1322_001:0489b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高鑒君子賢明哲人。",
        "from": "T21n1322_001:0489b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏罪求福之儔。",
        "from": "T21n1322_001:0489b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特宜存意此法。",
        "from": "T21n1322_001:0489b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不能每日浴者。",
        "from": "T21n1322_001:0489c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可每月為之。",
        "from": "T21n1322_001:0489c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲殊勝福利如浴像經中如來金口所說。",
        "from": "T21n1322_001:0489c02_7",
        "context_with_next_sentence": true
    }
]