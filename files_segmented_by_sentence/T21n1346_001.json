[
    {
        "source_sentence": "諸佛集會陀羅尼經一卷",
        "from": "T21n1346_001:0858c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏法師提雲般若等奉　制譯",
        "from": "T21n1346_001:0858c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛在恒伽河邊。護世四天王",
        "from": "T21n1346_001:0858c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "之所圍繞。",
        "from": "T21n1346_001:0858c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告毘沙門等四天王言。",
        "from": "T21n1346_001:0858c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等當知一切眾生。",
        "from": "T21n1346_001:0858c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若男若女若長若幼。",
        "from": "T21n1346_001:0858c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆為四種大怖所纏。",
        "from": "T21n1346_001:0858c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂生老病死。",
        "from": "T21n1346_001:0858c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然於其中死怖一種最難除遣。",
        "from": "T21n1346_001:0858c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為汝說除遣法。",
        "from": "T21n1346_001:0858c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王即從座起。",
        "from": "T21n1346_001:0858c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬白佛言。",
        "from": "T21n1346_001:0858c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我等今者獲大善利。",
        "from": "T21n1346_001:0858c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得值如來攝受世間施其命故。",
        "from": "T21n1346_001:0858c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊從座而起。",
        "from": "T21n1346_001:0859a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面于東方彈指唱言。",
        "from": "T21n1346_001:0859a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼方所有諸佛如來應正等覺。",
        "from": "T21n1346_001:0859a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不皆為一切眾生。",
        "from": "T21n1346_001:0859a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而成阿耨多羅三藐三菩提。",
        "from": "T21n1346_001:0859a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛當知我今為欲哀愍救護諸眾生故。",
        "from": "T21n1346_001:0859a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉先未轉第二法輪。",
        "from": "T21n1346_001:0859a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令眾生色力壽命皆悉增長。",
        "from": "T21n1346_001:0859a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永復無有非時夭橫。",
        "from": "T21n1346_001:0859a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願諸佛來此會中。",
        "from": "T21n1346_001:0859a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為護眾生共以威神除其橫苦。",
        "from": "T21n1346_001:0859a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南西北方四維上下皆亦如是。",
        "from": "T21n1346_001:0859a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時如來以佛眼觀十方世界。",
        "from": "T21n1346_001:0859a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一世界皆有諸佛。",
        "from": "T21n1346_001:0859a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "側塞充滿猶如稻麻。",
        "from": "T21n1346_001:0859a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉來此會而為等侶。",
        "from": "T21n1346_001:0859a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然見十方一切世界。",
        "from": "T21n1346_001:0859a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一方處諸佛世尊亦皆遍滿分明顯現。",
        "from": "T21n1346_001:0859a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切諸佛如來。",
        "from": "T21n1346_001:0859a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱時發聲而說呪曰。",
        "from": "T21n1346_001:0859a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "折禮句一折羅折禮句二毘那去借音即此字之上聲下有字傍註上字皆倣此徵珍里反句三莎蘇括反悉底都以反下同雞句四斫迦爛揭時句五鉢羅舍漫都句六薩婆嚕依魯字本音而轉舌呼之其下口邊作犁羅麗皆倣此伽句七阿那上𪘨卓諧反句八俱那上𪘨句九摩訶捺𪘨句十折𠼐折𠼐句十一醯呼計反下同摩具𠼝句十二醯摩儞產去地句十三醯摩室尼句十四吉囉上陛句十五吉囉上鞞句十六醯引聲俱囉上𠼐句十七俱囉上𠼐句十八俱末底句十九毘奢麼謀跛反泥句二十戍暑輸矩反毘上婆句二十一阿折禮毘折禮句二十二摩毘上濫婆句二十三呼去牟呼去牟句二十四爾時十方諸佛。",
        "from": "T21n1346_001:0859a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆有金剛密跡王親近圍繞。",
        "from": "T21n1346_001:0859a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量金剛王眾。",
        "from": "T21n1346_001:0859a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復共同聲而說呪曰。",
        "from": "T21n1346_001:0859a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𧵊呼濫反引聲句一𧵊句二室勢句三颯婆去訶句四爾時毘沙門天王白佛言世尊。",
        "from": "T21n1346_001:0859a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦為擁護眾生說陀羅尼。",
        "from": "T21n1346_001:0859a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其無有非時夭橫。",
        "from": "T21n1346_001:0859a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來垂哀與力。",
        "from": "T21n1346_001:0859b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T21n1346_001:0859b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稅低句一稅怛犁句二履梨句三爾時毘盧勒叉天王亦作是言。",
        "from": "T21n1346_001:0859b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為欲護諸眾生說陀羅尼。",
        "from": "T21n1346_001:0859b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T21n1346_001:0859b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩蹬耆瞿雞反句一摩蹬耆祇里反尼儞咨反句二暑輸矩反下同摩暑母句三爾時提頭賴吒天王。",
        "from": "T21n1346_001:0859b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為擁護諸眾生故而說呪曰。",
        "from": "T21n1346_001:0859b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "折囇折囇颯婆去訶爾時毘樓博叉天王亦說呪曰。",
        "from": "T21n1346_001:0859b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跋凌去婆上婆爾時世尊告四天王言諸天等此陀羅尼。",
        "from": "T21n1346_001:0859b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從於一切諸佛所生。",
        "from": "T21n1346_001:0859b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛共所知見。",
        "from": "T21n1346_001:0859b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T21n1346_001:0859b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至有能一日之中讀一遍者。",
        "from": "T21n1346_001:0859b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人終不墮於惡趣。",
        "from": "T21n1346_001:0859b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於是人起大師想。",
        "from": "T21n1346_001:0859b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人為欲利益一切眾生。",
        "from": "T21n1346_001:0859b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於日日中讀誦斯呪。",
        "from": "T21n1346_001:0859b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生壽命增長。",
        "from": "T21n1346_001:0859b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦令其人災橫怖畏皆得消除。",
        "from": "T21n1346_001:0859b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸惡相及眾疾苦。",
        "from": "T21n1346_001:0859b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水不能漂火不能燒。",
        "from": "T21n1346_001:0859b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀不能傷毒不能害。",
        "from": "T21n1346_001:0859b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在在處處有能讀誦此陀羅尼。",
        "from": "T21n1346_001:0859b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此處則為十方一切諸佛常所護念。",
        "from": "T21n1346_001:0859b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人自書若教人書。",
        "from": "T21n1346_001:0859b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人則為承事供養一切諸佛。",
        "from": "T21n1346_001:0859b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1346_001:0859b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於眾生能作饒益。",
        "from": "T21n1346_001:0859b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為供養一切佛故。",
        "from": "T21n1346_001:0859b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有專欲擁護其身。",
        "from": "T21n1346_001:0859b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當書此呪佩著身上。",
        "from": "T21n1346_001:0859b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若所在之處有深信法善男子善女人等。",
        "from": "T21n1346_001:0859b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或遇災難欲令除滅。",
        "from": "T21n1346_001:0859b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾應如法受持此呪。",
        "from": "T21n1346_001:0859b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持呪法著。",
        "from": "T21n1346_001:0859b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當簡擇清淨之處。",
        "from": "T21n1346_001:0859b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以栴檀末而塗其地。",
        "from": "T21n1346_001:0859b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成一方壇縱廣七肘。",
        "from": "T21n1346_001:0859b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人應從月初八日。",
        "from": "T21n1346_001:0859b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香湯洗浴著新淨衣受八戒齋。",
        "from": "T21n1346_001:0859b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯食粳米石蜜牛乳。",
        "from": "T21n1346_001:0859b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取黑沈香及龍腦香。",
        "from": "T21n1346_001:0859c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共滿一兩置於壇上。",
        "from": "T21n1346_001:0859c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取白檀香或沈水香。",
        "from": "T21n1346_001:0859c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或龍腦香或復丁香迦矩羅香。",
        "from": "T21n1346_001:0859c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而置於壇。",
        "from": "T21n1346_001:0859c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人誦此陀羅尼呪。",
        "from": "T21n1346_001:0859c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪此諸香。",
        "from": "T21n1346_001:0859c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於日日中皆七七遍滿于七日。",
        "from": "T21n1346_001:0859c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至十五日一日不食其日中時。",
        "from": "T21n1346_001:0859c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以欝金香於其壇上作二十一小壇。",
        "from": "T21n1346_001:0859c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一處中名如來壇。",
        "from": "T21n1346_001:0859c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘二十壇名金剛王壇。",
        "from": "T21n1346_001:0859c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於壇外作四小壇。",
        "from": "T21n1346_001:0859c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名四天王壇復取麝香龍腦白檀欝金之香及紫檀末。",
        "from": "T21n1346_001:0859c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來壇若散若塗而為供養。",
        "from": "T21n1346_001:0859c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘諸壇隨取一香而供養之。",
        "from": "T21n1346_001:0859c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取乳酪酥及沙糖。",
        "from": "T21n1346_001:0859c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其次第以新瓶四口。",
        "from": "T21n1346_001:0859c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各別盛之置四天王壇上。",
        "from": "T21n1346_001:0859c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以淨水著於瓶內。",
        "from": "T21n1346_001:0859c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採十二種果樹之花而置其中。",
        "from": "T21n1346_001:0859c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以香油然十支燈置如來壇。",
        "from": "T21n1346_001:0859c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲供養十方佛故。",
        "from": "T21n1346_001:0859c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘諸壇各然一支。",
        "from": "T21n1346_001:0859c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於前所呪諸香之內。",
        "from": "T21n1346_001:0859c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取龍腦及沈水。",
        "from": "T21n1346_001:0859c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來壇而燒供養。",
        "from": "T21n1346_001:0859c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餘壇上然自餘香。",
        "from": "T21n1346_001:0859c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將然香時其如來壇及餘壇香。",
        "from": "T21n1346_001:0859c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應各別誦此神呪而以呪之。",
        "from": "T21n1346_001:0859c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生得聞此香。",
        "from": "T21n1346_001:0859c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非時夭橫靡不除滅。",
        "from": "T21n1346_001:0859c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先所呪香並燒盡已。",
        "from": "T21n1346_001:0859c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後收彼四天王食散於淨處。",
        "from": "T21n1346_001:0859c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此經已。",
        "from": "T21n1346_001:0859c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王及一切世間天人阿修羅乾闥婆等。",
        "from": "T21n1346_001:0859c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜奉行。",
        "from": "T21n1346_001:0859c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛集會陀羅尼經",
        "from": "T21n1346_001:0859c22_100",
        "context_with_next_sentence": false
    }
]