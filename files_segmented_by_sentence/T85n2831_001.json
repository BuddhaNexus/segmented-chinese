[
    {
        "source_sentence": "無心論一卷",
        "from": "T85n2831_001:1269a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋菩提達摩製",
        "from": "T85n2831_001:1269a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫至理無言。要假言而顯理。大道無相為",
        "from": "T85n2831_001:1269a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "接麁而見形。",
        "from": "T85n2831_001:1269a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今且假立二人共談無心之論矣　弟子問和尚曰。",
        "from": "T85n2831_001:1269a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有心無心　答曰。",
        "from": "T85n2831_001:1269a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無心　問曰。",
        "from": "T85n2831_001:1269a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既云無心。",
        "from": "T85n2831_001:1269a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰能見聞覺知。",
        "from": "T85n2831_001:1269a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰知無心　答曰。",
        "from": "T85n2831_001:1269a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還是無心既見聞覺知。",
        "from": "T85n2831_001:1269a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還是無心能知無心　問曰。",
        "from": "T85n2831_001:1269a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既若無心。",
        "from": "T85n2831_001:1269a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即合無有見聞覺知。",
        "from": "T85n2831_001:1269a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得有見聞覺知　答曰。",
        "from": "T85n2831_001:1269a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我雖無心能見能聞能覺能知　問曰。",
        "from": "T85n2831_001:1269b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既能見聞覺知。",
        "from": "T85n2831_001:1269b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是有心。",
        "from": "T85n2831_001:1269b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那得稱無　答曰。",
        "from": "T85n2831_001:1269b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只是見聞覺知。",
        "from": "T85n2831_001:1269b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是無心。",
        "from": "T85n2831_001:1269b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何處更離見聞覺知別有無心。",
        "from": "T85n2831_001:1269b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今恐汝不解。",
        "from": "T85n2831_001:1269b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一為汝解說。",
        "from": "T85n2831_001:1269b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令汝得悟真理。",
        "from": "T85n2831_001:1269b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假如見終日見由為無見。",
        "from": "T85n2831_001:1269b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見亦無心。",
        "from": "T85n2831_001:1269b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞終日聞由為無聞。",
        "from": "T85n2831_001:1269b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞亦無心。",
        "from": "T85n2831_001:1269b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺終日覺由為無覺。",
        "from": "T85n2831_001:1269b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺亦無心。",
        "from": "T85n2831_001:1269b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知終日知由為無知。",
        "from": "T85n2831_001:1269b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知亦無心終日造作。",
        "from": "T85n2831_001:1269b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作亦無作。",
        "from": "T85n2831_001:1269b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作亦無心。",
        "from": "T85n2831_001:1269b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云見聞覺知總是無心　問曰。",
        "from": "T85n2831_001:1269b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為能得知是無心　答曰。",
        "from": "T85n2831_001:1269b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝但子細推求看。",
        "from": "T85n2831_001:1269b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心作何相貌。",
        "from": "T85n2831_001:1269b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心復可得。",
        "from": "T85n2831_001:1269b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是心不是心。",
        "from": "T85n2831_001:1269b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為復在內為復在外為復在中間。",
        "from": "T85n2831_001:1269b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三處推求覓心了不可得。",
        "from": "T85n2831_001:1269b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於一切處求覓亦不可得。",
        "from": "T85n2831_001:1269b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知即是無心　問曰。",
        "from": "T85n2831_001:1269b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚既云一切處總是無心。",
        "from": "T85n2831_001:1269b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即合無有罪福。",
        "from": "T85n2831_001:1269b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故眾生輪迴六聚生死不斷。",
        "from": "T85n2831_001:1269b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "T85n2831_001:1269b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生迷妄。",
        "from": "T85n2831_001:1269b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無心中而妄生心。",
        "from": "T85n2831_001:1269b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造種種業。",
        "from": "T85n2831_001:1269b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄執為有。",
        "from": "T85n2831_001:1269b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足可致使輪迴六趣生死不斷。",
        "from": "T85n2831_001:1269b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬有人於暗中見杌為鬼見繩為蛇便生恐怖。",
        "from": "T85n2831_001:1269b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生妄執亦復如是。",
        "from": "T85n2831_001:1269b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無心中妄執有心造種種業。",
        "from": "T85n2831_001:1269b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而實無不輪迴六趣。",
        "from": "T85n2831_001:1269b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾生若遇大善知識教令坐禪覺悟無心。",
        "from": "T85n2831_001:1269b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切業障盡皆銷滅生死即斷。",
        "from": "T85n2831_001:1269b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如暗中日光一照而暗皆盡。",
        "from": "T85n2831_001:1269b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若悟無心。",
        "from": "T85n2831_001:1269b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪滅亦復如是　問曰。",
        "from": "T85n2831_001:1269b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子愚昧心猶未了審。",
        "from": "T85n2831_001:1269b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切處六根所用者應　答曰。",
        "from": "T85n2831_001:1269b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語種種施為煩惱菩提生死涅槃定無心否　答曰。",
        "from": "T85n2831_001:1269b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定是無心。",
        "from": "T85n2831_001:1269b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只為眾生妄執有心即有一切煩惱生死菩提涅槃。",
        "from": "T85n2831_001:1269b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若覺無心即無一切煩惱生死涅槃。",
        "from": "T85n2831_001:1269b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故如來為有心者說有生死。",
        "from": "T85n2831_001:1269b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提對煩惱得名。",
        "from": "T85n2831_001:1269b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃者對生死得名。",
        "from": "T85n2831_001:1269c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此皆對治之法。",
        "from": "T85n2831_001:1269c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無心可得。",
        "from": "T85n2831_001:1269c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即煩惱菩提亦不可得。",
        "from": "T85n2831_001:1269c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至生死涅槃亦不可得　問曰。",
        "from": "T85n2831_001:1269c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提涅槃既不可得。",
        "from": "T85n2831_001:1269c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去諸佛皆得菩提。",
        "from": "T85n2831_001:1269c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此謂可乎　答曰。",
        "from": "T85n2831_001:1269c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以世諦文字之言得。",
        "from": "T85n2831_001:1269c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真諦實無可得。",
        "from": "T85n2831_001:1269c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故維摩經云。",
        "from": "T85n2831_001:1269c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提者不可以身得不可以心得。",
        "from": "T85n2831_001:1269c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又金剛經云。",
        "from": "T85n2831_001:1269c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有少法可得。",
        "from": "T85n2831_001:1269c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來但以不可得而得。",
        "from": "T85n2831_001:1269c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知有心即一切有無心一切無　問曰。",
        "from": "T85n2831_001:1269c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚既云於一切處盡皆無心。",
        "from": "T85n2831_001:1269c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木石亦無心。",
        "from": "T85n2831_001:1269c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈不同於木石乎　答曰。",
        "from": "T85n2831_001:1269c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而我無心心不同木石。",
        "from": "T85n2831_001:1269c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T85n2831_001:1269c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如天鼓。",
        "from": "T85n2831_001:1269c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復無心自然出種種妙法教化眾生。",
        "from": "T85n2831_001:1269c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如如意珠。",
        "from": "T85n2831_001:1269c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復無心自然能作種種變現。",
        "from": "T85n2831_001:1269c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而我無心亦復如是。",
        "from": "T85n2831_001:1269c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復無心善能覺了諸法實相具真般若三身自在應用無妨。",
        "from": "T85n2831_001:1269c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故寶積經云。",
        "from": "T85n2831_001:1269c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無心意而現行。",
        "from": "T85n2831_001:1269c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈同木石乎。",
        "from": "T85n2831_001:1269c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫無心者即真心也。",
        "from": "T85n2831_001:1269c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真心者即無心也　問曰。",
        "from": "T85n2831_001:1269c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今於心中作若為修行　答曰。",
        "from": "T85n2831_001:1269c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但於一切事上覺了。",
        "from": "T85n2831_001:1269c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無心即是修行。",
        "from": "T85n2831_001:1269c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不別有修行。",
        "from": "T85n2831_001:1269c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知無心即一切。",
        "from": "T85n2831_001:1269c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂滅即無心也　弟子於是忽然大悟。",
        "from": "T85n2831_001:1269c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始知心外無物物外無心。",
        "from": "T85n2831_001:1269c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉止動用皆得自在。",
        "from": "T85n2831_001:1269c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷諸疑網更無罣礙。",
        "from": "T85n2831_001:1269c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即起作禮。",
        "from": "T85n2831_001:1269c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而銘無心乃為頌曰。",
        "from": "T85n2831_001:1269c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心神向寂　　無色無形　　覩之不見",
        "from": "T85n2831_001:1269c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽之無聲　　似暗非暗　　如明不明",
        "from": "T85n2831_001:1269c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨之不滅　　取之無生",
        "from": "T85n2831_001:1269c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大即廓周法界　　小即毛竭不停",
        "from": "T85n2831_001:1269c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱混之不濁　　涅槃澄之不清",
        "from": "T85n2831_001:1269c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如本無分別　　能辯有情無情",
        "from": "T85n2831_001:1269c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收之一切不立　　散之普遍含靈",
        "from": "T85n2831_001:1269c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙神非知所測　　正覓絕於修行",
        "from": "T85n2831_001:1270a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅則不見其懷　　生則不見其成",
        "from": "T85n2831_001:1270a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大道寂號無相　　萬像窈號無名",
        "from": "T85n2831_001:1270a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯運用自在　　總是無心之精",
        "from": "T85n2831_001:1270a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚又告曰。",
        "from": "T85n2831_001:1270a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸般若中以無心般若而為最上故維摩經云。",
        "from": "T85n2831_001:1270a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無心意無受行。",
        "from": "T85n2831_001:1270a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而悉摧伏外道。",
        "from": "T85n2831_001:1270a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法鼓經。",
        "from": "T85n2831_001:1270a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若知無心可得。",
        "from": "T85n2831_001:1270a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法即不可得。",
        "from": "T85n2831_001:1270a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪福亦不可得。",
        "from": "T85n2831_001:1270a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死涅槃亦不可得。",
        "from": "T85n2831_001:1270a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切盡不可得。",
        "from": "T85n2831_001:1270a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可得亦不可得。",
        "from": "T85n2831_001:1270a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃為頌曰。",
        "from": "T85n2831_001:1270a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔日迷時為有心　　爾時悟罷了無心",
        "from": "T85n2831_001:1270a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復無心能照用　　照用常寂即如如",
        "from": "T85n2831_001:1270a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重曰。",
        "from": "T85n2831_001:1270a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無心無照亦無用　　無照無用即無為",
        "from": "T85n2831_001:1270a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是如來真法界　　不同菩薩為辟支",
        "from": "T85n2831_001:1270a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言無心者即無妄相心也。",
        "from": "T85n2831_001:1270a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又問。",
        "from": "T85n2831_001:1270a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名為太上　答曰。",
        "from": "T85n2831_001:1270a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太者大也。",
        "from": "T85n2831_001:1270a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上者高也。",
        "from": "T85n2831_001:1270a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮高之妙理故云太上也。",
        "from": "T85n2831_001:1270a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又太者通泰之位也。",
        "from": "T85n2831_001:1270a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界之天雖有延康之壽福盡。",
        "from": "T85n2831_001:1270a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故終輪迴六趣。",
        "from": "T85n2831_001:1270a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未足為太。",
        "from": "T85n2831_001:1270a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十住菩薩雖出離生死。",
        "from": "T85n2831_001:1270a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而妙理未極。",
        "from": "T85n2831_001:1270a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦未為太。",
        "from": "T85n2831_001:1270a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十住修心妄有入無。",
        "from": "T85n2831_001:1270a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又無其無有雙遣不妄中道。",
        "from": "T85n2831_001:1270a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦未為太。",
        "from": "T85n2831_001:1270a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又忘中道三處都盡。",
        "from": "T85n2831_001:1270a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "位皆妙覺。",
        "from": "T85n2831_001:1270a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩雖遣三處。",
        "from": "T85n2831_001:1270a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能無其所妙。",
        "from": "T85n2831_001:1270a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦未為太。",
        "from": "T85n2831_001:1270a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又忘其妙則佛道至極。",
        "from": "T85n2831_001:1270a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無所存。",
        "from": "T85n2831_001:1270a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無存思則無思慮。",
        "from": "T85n2831_001:1270a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼妄心智永息。",
        "from": "T85n2831_001:1270a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺照俱盡。",
        "from": "T85n2831_001:1270a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂然無為。",
        "from": "T85n2831_001:1270a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名為太也。",
        "from": "T85n2831_001:1270a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太是理極之義。",
        "from": "T85n2831_001:1270a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上是無等色。",
        "from": "T85n2831_001:1270a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云太上。",
        "from": "T85n2831_001:1270a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即之佛如來之別名也。",
        "from": "T85n2831_001:1270a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無心論一卷",
        "from": "T85n2831_001:1270a28_100",
        "context_with_next_sentence": false
    }
]