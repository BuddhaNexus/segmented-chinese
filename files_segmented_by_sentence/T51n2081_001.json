[
    {
        "source_sentence": "兩部大法相承師資付法記上",
        "from": "T51n2081_001:0783c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩部付法次第記海雲記",
        "from": "T51n2081_001:0783c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略敘金剛界大教王經師資相承付法次第",
        "from": "T51n2081_001:0783c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記。",
        "from": "T51n2081_001:0783c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏金剛智云。",
        "from": "T51n2081_001:0783c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從南竺國。",
        "from": "T51n2081_001:0783c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親於龍智阿闍梨邊。",
        "from": "T51n2081_001:0783c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳得此金剛界百千頌經。",
        "from": "T51n2081_001:0783c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍智阿闍梨自云。",
        "from": "T51n2081_001:0783c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從毘盧遮那如來即釋迦如來是此約法性身為名在世。",
        "from": "T51n2081_001:0783c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此金剛界最上乘法。",
        "from": "T51n2081_001:0783c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付屬普賢金剛薩埵。",
        "from": "T51n2081_001:0783c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢金剛薩埵付妙吉祥菩薩。",
        "from": "T51n2081_001:0783c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥菩薩復經十二代。",
        "from": "T51n2081_001:0783c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法付囑龍猛菩薩龍猛菩薩即龍樹菩薩也。",
        "from": "T51n2081_001:0783c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩生時於龍樹下生故名龍樹也龍猛菩薩又經數百年以法付囑龍智阿闍梨。",
        "from": "T51n2081_001:0783c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍智阿闍梨又經百餘年此二聖者道果成就。",
        "from": "T51n2081_001:0783c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆壽數百歲以法付金剛智三藏梵云囀曰羅（二合）吉孃（二合）曩此云金剛智金剛智三藏和尚蘊大小乘。",
        "from": "T51n2081_001:0783c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗一切有部。",
        "from": "T51n2081_001:0783c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住戒霜潔。",
        "from": "T51n2081_001:0783c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律為提塘。",
        "from": "T51n2081_001:0783c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺國王第三子為弘法故杖錫五天。",
        "from": "T51n2081_001:0783c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來遊震旦。",
        "from": "T51n2081_001:0783c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有中天竺國三藏。",
        "from": "T51n2081_001:0783c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性釋迦氏。",
        "from": "T51n2081_001:0783c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斛飯王五十二代孫因父王使命征戰。",
        "from": "T51n2081_001:0784a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂見殺戮殘害者眾。",
        "from": "T51n2081_001:0784a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂不樂王位。",
        "from": "T51n2081_001:0784a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭世出家。",
        "from": "T51n2081_001:0784a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓願傳法東國。",
        "from": "T51n2081_001:0784a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與金剛智三藏。",
        "from": "T51n2081_001:0784a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於玄宗朝同為國師知三藏金藏智解金剛界法。",
        "from": "T51n2081_001:0784a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂於金剛智三藏請傳金剛界五部法。",
        "from": "T51n2081_001:0784a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時三藏金剛智知中天竺國無畏三藏解大毘盧遮那教。",
        "from": "T51n2081_001:0784a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎言此法甚深難逢難遇昔於南天竺國聞有大毘盧遮那教名。",
        "from": "T51n2081_001:0784a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂遊五天訪求都無解者。",
        "from": "T51n2081_001:0784a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今至大唐喜遇此教。",
        "from": "T51n2081_001:0784a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂請無畏三藏求授大毘盧遮那大教。",
        "from": "T51n2081_001:0784a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亘為師資傳授二本教。",
        "from": "T51n2081_001:0784a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏金剛智阿闍梨又將此金剛界大教王付大興善寺三藏不空智阿闍梨。",
        "from": "T51n2081_001:0784a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏不空智和尚又以此法付囑含光阿闍梨等弟子五人。",
        "from": "T51n2081_001:0784a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一含光阿闍梨代宗皇帝有勅令修北五臺山造金閣寺不暇傳法二大興善寺惠朗阿闍梨傳於崇福寺天竺阿闍梨天竺阿闍梨傳付德美惠謹俗居士趙玖三青龍寺曇貞阿闍梨不傳弟子每有學法者云東塔院有惠果阿闍梨善通教相可於彼學四保壽寺覺超阿闍梨傳付契如。",
        "from": "T51n2081_001:0784a17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惠德阿闍梨五青龍寺東塔院惠果阿闍梨善通聲論唐梵雙明。",
        "from": "T51n2081_001:0784a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每栖心於實相之門。",
        "from": "T51n2081_001:0784a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙悟解於如如之理。",
        "from": "T51n2081_001:0784a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常諷維摩經。",
        "from": "T51n2081_001:0784a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於餘暇常披讀。",
        "from": "T51n2081_001:0784a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃。",
        "from": "T51n2081_001:0784a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花嚴。",
        "from": "T51n2081_001:0784a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若。",
        "from": "T51n2081_001:0784a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楞伽。",
        "from": "T51n2081_001:0784a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思益。",
        "from": "T51n2081_001:0784a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復遇大興善三藏和尚授金剛界。",
        "from": "T51n2081_001:0784a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃曰此教最上最妙。",
        "from": "T51n2081_001:0784a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然昔日所悟大乘心地亦為至極至妙。",
        "from": "T51n2081_001:0784a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今遇金剛界法門。",
        "from": "T51n2081_001:0784a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更為最上。",
        "from": "T51n2081_001:0784a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以云極無有上者。",
        "from": "T51n2081_001:0784a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且顯教心地唯明理觀。",
        "from": "T51n2081_001:0784a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此瑜伽教通理事二門。",
        "from": "T51n2081_001:0784a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住金剛界。",
        "from": "T51n2081_001:0784a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念相應。",
        "from": "T51n2081_001:0784a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便登正覺。",
        "from": "T51n2081_001:0784a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云極無有上也。",
        "from": "T51n2081_001:0784a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所傳金剛界法者。",
        "from": "T51n2081_001:0784a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則有大興善寺傳灌頂教同學惠應阿闍梨惠則成都府惟尚。",
        "from": "T51n2081_001:0784b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汴淋辨弘。",
        "from": "T51n2081_001:0784b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "新羅國僧惠日。",
        "from": "T51n2081_001:0784b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日本國僧空海。",
        "from": "T51n2081_001:0784b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青龍寺義滿。",
        "from": "T51n2081_001:0784b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義明。",
        "from": "T51n2081_001:0784b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義操。",
        "from": "T51n2081_001:0784b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義照。",
        "from": "T51n2081_001:0784b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義愍。",
        "from": "T51n2081_001:0784b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義政。",
        "from": "T51n2081_001:0784b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義一。",
        "from": "T51n2081_001:0784b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俗居士靈殷已上十四人皆傳授大教次阿闍梨位次青龍寺東塔院義操阿闍梨所傳。",
        "from": "T51n2081_001:0784b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛界大法。",
        "from": "T51n2081_001:0784b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則有當院同學僧。",
        "from": "T51n2081_001:0784b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法潤。",
        "from": "T51n2081_001:0784b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義貞。",
        "from": "T51n2081_001:0784b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義舟。",
        "from": "T51n2081_001:0784b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義圓。",
        "from": "T51n2081_001:0784b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "景公寺僧深達。",
        "from": "T51n2081_001:0784b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨住寺僧海雲。",
        "from": "T51n2081_001:0784b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇福寺僧大遇。",
        "from": "T51n2081_001:0784b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醴泉寺僧從賀。",
        "from": "T51n2081_001:0784b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文苑。",
        "from": "T51n2081_001:0784b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會昌寺新羅國僧圴亮。",
        "from": "T51n2081_001:0784b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當院常堅。",
        "from": "T51n2081_001:0784b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄法寺僧智深。",
        "from": "T51n2081_001:0784b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法全。",
        "from": "T51n2081_001:0784b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子僧文祕已上一十四人授金剛界大法皆次阿闍梨位故。",
        "from": "T51n2081_001:0784b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得金剛界大教。",
        "from": "T51n2081_001:0784b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海內流行。",
        "from": "T51n2081_001:0784b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枝葉不絕。",
        "from": "T51n2081_001:0784b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優曇鉢教。",
        "from": "T51n2081_001:0784b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿字已圓。",
        "from": "T51n2081_001:0784b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有得傳金剛界法者。",
        "from": "T51n2081_001:0784b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓見菩提。",
        "from": "T51n2081_001:0784b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入曼荼羅。",
        "from": "T51n2081_001:0784b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得授阿闍梨灌頂。",
        "from": "T51n2081_001:0784b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如授法輪王位。",
        "from": "T51n2081_001:0784b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大教王名金剛界者。",
        "from": "T51n2081_001:0784b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛者堅固義也。",
        "from": "T51n2081_001:0784b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以表一切如來法身堅固不壞無生無滅無始無終堅固常存不壞也。",
        "from": "T51n2081_001:0784b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "界者性也。",
        "from": "T51n2081_001:0784b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明一切如來金剛性遍一切有想身中本來具足圓滿普賢毘盧遮那大用自性身海性功德。",
        "from": "T51n2081_001:0784b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故修瑜伽者。",
        "from": "T51n2081_001:0784b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以大樂普賢金剛慾箭三摩地。",
        "from": "T51n2081_001:0784b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破彼無明住地二障種現及二乘種。",
        "from": "T51n2081_001:0784b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧碎無餘。",
        "from": "T51n2081_001:0784b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一念頃證大日毘盧遮那位。",
        "from": "T51n2081_001:0784b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經又名金剛頂者。",
        "from": "T51n2081_001:0784b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人之身。",
        "from": "T51n2081_001:0784b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂最為勝。",
        "from": "T51n2081_001:0784b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此教於一切大乘法中最為尊上。",
        "from": "T51n2081_001:0784b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名金剛頂梵云縛曰嚕（二合）瑟抳（二合）沙此云金剛頂又是金剛界光明遍照如來現等覺身示現三密五智令一切有情證大圓鏡智成大菩提也。",
        "from": "T51n2081_001:0784b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經梵本十萬偈。",
        "from": "T51n2081_001:0784b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略本四千偈。",
        "from": "T51n2081_001:0784b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣本則有無量百千俱胝那庾多微塵數偈。",
        "from": "T51n2081_001:0784b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金剛頂義決中說。",
        "from": "T51n2081_001:0784b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺國有大鐵塔。",
        "from": "T51n2081_001:0784b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中有金剛界曼荼羅。",
        "from": "T51n2081_001:0784b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者形像鐵鑄所成。",
        "from": "T51n2081_001:0784b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其塔中有梵夾。",
        "from": "T51n2081_001:0784b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣如床。",
        "from": "T51n2081_001:0784c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣八九尺。",
        "from": "T51n2081_001:0784c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高下五六尺盡是金剛界大教王廣梵本經。",
        "from": "T51n2081_001:0784c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知此經廣本有無量百千俱胝那庾多微塵數偈不可以凡心測量如法華化城喻品云說是法華經如恒河沙偈。",
        "from": "T51n2081_001:0784c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又藥王本事品說甄迦羅。",
        "from": "T51n2081_001:0784c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頻婆羅阿閦婆等偈。",
        "from": "T51n2081_001:0784c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨根演教廣略不同。",
        "from": "T51n2081_001:0784c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即如花嚴經三本。",
        "from": "T51n2081_001:0784c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上本有十三千大千世界微塵數偈。",
        "from": "T51n2081_001:0784c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四天下微塵數品。",
        "from": "T51n2081_001:0784c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中本有四天下微塵數偈第三本十萬偈即花嚴八十卷經等是也即如金剛頂經梵夾經略本四千偈中本十萬偈。",
        "from": "T51n2081_001:0784c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣本則有無量百千俱胝那庾多微偈又如華嚴經說普賢修多羅。",
        "from": "T51n2081_001:0784c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛剎微塵數修多羅而為眷屬昔姚秦時羅什三藏將此梵網經云是大本菩薩戒經。",
        "from": "T51n2081_001:0784c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略譯成兩卷。",
        "from": "T51n2081_001:0784c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云是此經中淺略行相。",
        "from": "T51n2081_001:0784c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又至大唐開元年中三藏金剛智從南天竺國將得金剛界十萬偈梵夾經。",
        "from": "T51n2081_001:0784c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時大海中過大惡風。",
        "from": "T51n2081_001:0784c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三船中所有寶物舍利功德盡投於海中。",
        "from": "T51n2081_001:0784c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時十萬偈梵夾經誤忘亦投於海中。",
        "from": "T51n2081_001:0784c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏爾時作息災法。",
        "from": "T51n2081_001:0784c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂得風止。",
        "from": "T51n2081_001:0784c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知十萬偈經與此土緣薄故此經王沈沒大海。",
        "from": "T51n2081_001:0784c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次至太唐天寶九載三藏不空阿闍梨自往五天遍求勝法行至南天竺國得遇長年普賢阿闍梨。",
        "from": "T51n2081_001:0785a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂再諮求重學金剛界法。",
        "from": "T51n2081_001:0785a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將得十萬偈經故金剛界前後所學者有少不同所以大興善寺三藏和尚代宗皇帝灌頂之師。",
        "from": "T51n2081_001:0785a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每與皇帝講金剛界甚深義味。",
        "from": "T51n2081_001:0785a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常在內道場翻譯聖教。",
        "from": "T51n2081_001:0785a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門下學徒授持明灌頂者。",
        "from": "T51n2081_001:0785a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數盈千萬。",
        "from": "T51n2081_001:0785a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昇堂預翻譯者三十餘人。",
        "from": "T51n2081_001:0785a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入室傳阿闍梨灌頂者。",
        "from": "T51n2081_001:0785a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數唯五人如前文已敘金剛界毘盧遮那梵本經百千偈即十萬偈也說經處有十八會名目列數次第如十八會指歸說也四大品。",
        "from": "T51n2081_001:0785a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一金剛界。",
        "from": "T51n2081_001:0785a09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二降三世。",
        "from": "T51n2081_001:0785a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三遍調伏。",
        "from": "T51n2081_001:0785a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四一切義成就此四種皆金剛界所攝一切法要以四智印攝所謂大印。",
        "from": "T51n2081_001:0785a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩耶印。",
        "from": "T51n2081_001:0785a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法智印。",
        "from": "T51n2081_001:0785a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯磨智印。",
        "from": "T51n2081_001:0785a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又一一曼荼羅皆具六曼拏羅。",
        "from": "T51n2081_001:0785a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一所謂大曼拏羅。",
        "from": "T51n2081_001:0785a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二三昧耶曼荼羅。",
        "from": "T51n2081_001:0785a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三法曼荼羅。",
        "from": "T51n2081_001:0785a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四羯磨曼荼羅。",
        "from": "T51n2081_001:0785a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五四印曼荼羅。",
        "from": "T51n2081_001:0785a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六一印曼荼羅。",
        "from": "T51n2081_001:0785a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯降三世曼荼羅具十曼。",
        "from": "T51n2081_001:0785a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘皆具六。",
        "from": "T51n2081_001:0785a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其經說五部。",
        "from": "T51n2081_001:0785a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一佛部毘盧遮那佛以為部主。",
        "from": "T51n2081_001:0785a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四波羅蜜菩薩以為看屬。",
        "from": "T51n2081_001:0785a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二金剛部阿閦佛以為部主四大菩薩以為看屬。",
        "from": "T51n2081_001:0785a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三寶部寶生佛以為部主四大菩薩以為看屬。",
        "from": "T51n2081_001:0785a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四蓮華部阿彌陀佛以為部主四大菩薩以為看屬。",
        "from": "T51n2081_001:0785a18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五羯磨部不空成就佛以為部主四大菩薩以為看屬。",
        "from": "T51n2081_001:0785a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外供養及四攝成三十七。",
        "from": "T51n2081_001:0785a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又說四種法身。",
        "from": "T51n2081_001:0785a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一自性身。",
        "from": "T51n2081_001:0785a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二受用身。",
        "from": "T51n2081_001:0785a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三變化身。",
        "from": "T51n2081_001:0785a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四等流身。",
        "from": "T51n2081_001:0785a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種地位。",
        "from": "T51n2081_001:0785a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一勝解行地。",
        "from": "T51n2081_001:0785a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二普賢行願地。",
        "from": "T51n2081_001:0785a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三大普賢地。",
        "from": "T51n2081_001:0785a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四普遍照輝地。",
        "from": "T51n2081_001:0785a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地前三賢為勝解行地。",
        "from": "T51n2081_001:0785a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從初地至十地為普賢行願地。",
        "from": "T51n2081_001:0785a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等覺菩薩為大普賢地。",
        "from": "T51n2081_001:0785a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛名普遍照耀地。",
        "from": "T51n2081_001:0785a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種念誦。",
        "from": "T51n2081_001:0785a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一聲念誦。",
        "from": "T51n2081_001:0785a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二語念誦。",
        "from": "T51n2081_001:0785a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名金剛念誦謂舌端微動唇齒合三三摩地念誦謂住定與觀智相應。",
        "from": "T51n2081_001:0785a26_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四勝義念誦思第一義諦如久之理。",
        "from": "T51n2081_001:0785a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種求願法謂息災增益降伏敬愛并攝召成五。",
        "from": "T51n2081_001:0785a27_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又瑜伽經中明四種眼如經說。",
        "from": "T51n2081_001:0785a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種座法如經說。",
        "from": "T51n2081_001:0785a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五種大願如經說。",
        "from": "T51n2081_001:0785a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又一切如來教集瑜伽中說一百二十種護摩爐。",
        "from": "T51n2081_001:0785b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爐中執印標幟各異。",
        "from": "T51n2081_001:0785b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求迅速成辨世出世間果報。",
        "from": "T51n2081_001:0785b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸會浩汗內曼拏羅尊位三十七并賢劫十六大菩薩表賢劫中一千佛。",
        "from": "T51n2081_001:0785b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或賢劫千佛皆。",
        "from": "T51n2081_001:0785b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在曼荼羅四方。",
        "from": "T51n2081_001:0785b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圍繞大曼荼羅。",
        "from": "T51n2081_001:0785b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成五十三。",
        "from": "T51n2081_001:0785b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并外二十天成七十三。",
        "from": "T51n2081_001:0785b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內院地水火風天成七十七。",
        "from": "T51n2081_001:0785b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四角有四忿怒明王或宣標幟形成八十一聖者身。",
        "from": "T51n2081_001:0785b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已上總名金剛界大曼荼羅王內五十三聖者屬灌頂尊餘天等皆各外金剛部不入灌頂位金剛界曼荼羅并外金剛部尊身共八十一。",
        "from": "T51n2081_001:0785b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是金剛界光明遍照如來之看屬。",
        "from": "T51n2081_001:0785b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以表十方三世盡虛空遍法界持微塵剎海一切如來身。",
        "from": "T51n2081_001:0785b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為其體是亦十方三世諸佛。",
        "from": "T51n2081_001:0785b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若波羅蜜母悉能出生一切諸佛菩薩金剛薩埵性所成就諸菩薩等。",
        "from": "T51n2081_001:0785b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能出世甚深祕密百千萬億修多羅藏。",
        "from": "T51n2081_001:0785b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是毘盧遮那如來性海功德亦能出世花藏莊嚴世界海有情世間及器世間。",
        "from": "T51n2081_001:0785b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是毘盧遮那如來體性周遍故一身充滿一切剎。",
        "from": "T51n2081_001:0785b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云此教門難逢難遇。",
        "from": "T51n2081_001:0785b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故從上傳法者經數百年。",
        "from": "T51n2081_001:0785b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外方傳一人。",
        "from": "T51n2081_001:0785b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我大興善寺三藏和尚親禮五天。",
        "from": "T51n2081_001:0785b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重諮勝法。",
        "from": "T51n2081_001:0785b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教流天下。",
        "from": "T51n2081_001:0785b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大法盛傳。",
        "from": "T51n2081_001:0785b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以新羅諸國經逾數萬。",
        "from": "T51n2081_001:0785b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "航海忘軀。",
        "from": "T51n2081_001:0785b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來趨我唐。",
        "from": "T51n2081_001:0785b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至求勝法。",
        "from": "T51n2081_001:0785b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得金剛界累代相承每年有勅。",
        "from": "T51n2081_001:0785b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大興善寺及青龍寺保壽興唐崇福醲泉寺。",
        "from": "T51n2081_001:0785b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大開灌頂。",
        "from": "T51n2081_001:0785b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法度人。",
        "from": "T51n2081_001:0785b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是皆我大興善寺三藏和尚傳法之孫資也弘教枝葉遞相傳持。",
        "from": "T51n2081_001:0785b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永久無盡。",
        "from": "T51n2081_001:0785b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻海雲頃因餘暇。",
        "from": "T51n2081_001:0785b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時屬仲秋之月。",
        "from": "T51n2081_001:0785b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹依本教略集金剛界大教王師資相承傳法次第。",
        "from": "T51n2081_001:0785b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從普賢金剛薩埵至今所傳繼于八葉。",
        "from": "T51n2081_001:0785b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮金剛界自在。",
        "from": "T51n2081_001:0785c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢薩埵持明王。",
        "from": "T51n2081_001:0785c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴此讚演施群生。",
        "from": "T51n2081_001:0785c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普願同生華藏界。",
        "from": "T51n2081_001:0785c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巨唐大和八年歲在甲寅仲秋月二十日淨住寺梵字傳教沙門海雲集",
        "from": "T51n2081_001:0785c04_100",
        "context_with_next_sentence": false
    }
]