[
    {
        "source_sentence": "佛說師子素駄娑王斷肉經",
        "from": "T03n0164_001:0392a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐沙門智嚴譯",
        "from": "T03n0164_001:0392a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我憶過去無量劫，　　有王名曰素駄娑！",
        "from": "T03n0164_001:0392a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其王一時出遊山，　　群臣部從獵蟲獸，",
        "from": "T03n0164_001:0392a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽逢雷雹惡風起，　　諸人分散悉驚惶，",
        "from": "T03n0164_001:0392a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王獨走入深山林，　　臨河蘇息無人伴，",
        "from": "T03n0164_001:0392a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牝母師子在山藪，　　見王獨坐逼王身。",
        "from": "T03n0164_001:0392a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生惡業夙緣故，　　轉種地獄苦無量。",
        "from": "T03n0164_001:0392a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王與師子夙因緣，　　欲情俱起共交會，",
        "from": "T03n0164_001:0392a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多劫食肉殺生者，　　夙習故入師子胎，",
        "from": "T03n0164_001:0392a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便生人身師子首，　　斑足丈夫如獸王。",
        "from": "T03n0164_001:0392a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長成迅速甚猛利，　　問母：",
        "from": "T03n0164_001:0392a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我是誰體胤？",
        "from": "T03n0164_001:0392a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」其母師子答子云：",
        "from": "T03n0164_001:0392a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　「汝父竭國素駄王。",
        "from": "T03n0164_001:0392a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子聞是已速往尋，　　摩竭提國父王所，",
        "from": "T03n0164_001:0392a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引現具啟往因緣，　　王聞自悟收為子。",
        "from": "T03n0164_001:0392a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然為父王年老邁，　　登樓冊子立為王，",
        "from": "T03n0164_001:0392a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號為師子素駄娑，　　御殿朝政理臣民。",
        "from": "T03n0164_001:0392a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子展轉惡習故，　　多劫食肉害眾生，",
        "from": "T03n0164_001:0392a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖居人王不食穀，　　唯飡鳥獸水陸蟲。",
        "from": "T03n0164_001:0392a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供進雜肉時將至，　　闥拔獸肉狗銜將，",
        "from": "T03n0164_001:0392a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闕肉厨人懼王斬，　　走出捕捉小嬰孩，",
        "from": "T03n0164_001:0392a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密截頭項并手足，　　全煑鑊中供進王。",
        "from": "T03n0164_001:0392a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王食其肉甚將美，　　長嗜肉味狀燒薪，",
        "from": "T03n0164_001:0392a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王問食官是何肉？",
        "from": "T03n0164_001:0392a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　食官惶怖具啟王，王赦其罪勿憂愁，　　每日供進是肉來。",
        "from": "T03n0164_001:0392a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厨人既承大王教，　　變服每日盜他兒，",
        "from": "T03n0164_001:0392a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積年竊盜他男女，　　如行羅剎復如鷹。",
        "from": "T03n0164_001:0392b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國內人民並持服，　　為失子息各慞惶，",
        "from": "T03n0164_001:0392b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩兩執手互相問，　　氣噎無處告皇天。",
        "from": "T03n0164_001:0392b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邑人守捕獲其賊，　　厨賊訴云不自由。",
        "from": "T03n0164_001:0392b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國人聞此啟諫王，　　王聞忿怒大嗔責：",
        "from": "T03n0164_001:0392b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「比日令密進孩肉，　　從今每自料一人。",
        "from": "T03n0164_001:0392b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親戚臣民次第食，　　如羊欄內被牽將，",
        "from": "T03n0164_001:0392b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闔國絕望無控告，　　普集王衙欲除君。",
        "from": "T03n0164_001:0392b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王上高臺祈神鬼：",
        "from": "T03n0164_001:0392b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　「請翅飛騰免斯難，若得翅飛取諸方，　　百國王頭祭山神。",
        "from": "T03n0164_001:0392b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子猛獸惡習故，　　立得翅飛接諸王，",
        "from": "T03n0164_001:0392b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囚縶高峯峻巖上，　　已得九十九國王，",
        "from": "T03n0164_001:0392b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟少一王擬當祭，　　師子而下更尋求。",
        "from": "T03n0164_001:0392b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時王舍菩薩王，　　號為聞月園苑浴，",
        "from": "T03n0164_001:0392b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子見王坐玉矴，　　下捉右臂欲擒將。",
        "from": "T03n0164_001:0392b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聞月王悲泣，　　師子問王何故啼？",
        "from": "T03n0164_001:0392b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我聞大王勇猛智，　　菩薩不顧身命財。",
        "from": "T03n0164_001:0392b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「若也如是當應忍，　　何得苦憂不自由？",
        "from": "T03n0164_001:0392b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」聞月答王師子云：",
        "from": "T03n0164_001:0392b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　「一切憂苦不過慈，修行菩薩大慈悲。",
        "from": "T03n0164_001:0392b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　我今憂彼百國王，一生豪貴主天下，　　今日囚縶命欲終；",
        "from": "T03n0164_001:0392b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我又百國求佛法，　　請得法師遠方來，",
        "from": "T03n0164_001:0392b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未及聽法親授教，　　國人渴仰未曾聞。",
        "from": "T03n0164_001:0392b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝捨施我一七日，　　供養三寶聽法音，",
        "from": "T03n0164_001:0392b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集會群臣囑累法，　　八日當自迎大王。",
        "from": "T03n0164_001:0392b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其菩薩無詐妄，　　師子許王七日期，",
        "from": "T03n0164_001:0392b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八日聞月出城迎，　　捨身施待師子王。",
        "from": "T03n0164_001:0392b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時師子如雲現，　　擒接聞月對眾將。",
        "from": "T03n0164_001:0392b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子問王：",
        "from": "T03n0164_001:0392b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「可無畏？",
        "from": "T03n0164_001:0392b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　敢出我前如獸王？",
        "from": "T03n0164_001:0392b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」聞月答王師子言：",
        "from": "T03n0164_001:0392c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　「是身虛假施大王，寧捨百千身命財，　　不犯前言失汝期。",
        "from": "T03n0164_001:0392c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」和顏悅色方便語：",
        "from": "T03n0164_001:0392c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　「聽我少時說因緣。",
        "from": "T03n0164_001:0392c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲祭祀邪神鬼，　　諸部善神與汝殃，",
        "from": "T03n0164_001:0392c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方佛剎諸賢聖，　　多劫汝不更聞名。",
        "from": "T03n0164_001:0392c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是身虛假合因緣，　　命若電光無停住，",
        "from": "T03n0164_001:0392c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五根六識無人我，　　眼耳鼻舌觸為因，",
        "from": "T03n0164_001:0392c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如幻變化見眾像，　　眾生妄想執為真，",
        "from": "T03n0164_001:0392c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從頭至足驗此軀，　　無有一事是常住，",
        "from": "T03n0164_001:0392c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如水中泡剎那滅，　　老病死苦亦無常。",
        "from": "T03n0164_001:0392c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今雖肉養其身，　　究竟無依無善路，",
        "from": "T03n0164_001:0392c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生無量食噉肉，　　展轉受苦惡道中。",
        "from": "T03n0164_001:0392c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聞月無量偈，　　勸化師子素駄王，",
        "from": "T03n0164_001:0392c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子聞已漸廻心，　　聽聞無我實相體。",
        "from": "T03n0164_001:0392c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子問王：",
        "from": "T03n0164_001:0392c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如何計，　　祭祀無罪得神歡？",
        "from": "T03n0164_001:0392c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」聞月答云：",
        "from": "T03n0164_001:0392c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「辦素味，　　無辜淨食祭祀天。",
        "from": "T03n0164_001:0392c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子依命祭山神，　　捨身施與聞月王，",
        "from": "T03n0164_001:0392c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山中囚禁諸王者，　　並皆付囑聞月將。",
        "from": "T03n0164_001:0392c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞月各引還本國，　　依舊安置理人民，",
        "from": "T03n0164_001:0392c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并將師子素駄王，　　摩竭提國坐本宮，",
        "from": "T03n0164_001:0392c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和合諸臣及萬姓，　　合國斷肉不殺生。",
        "from": "T03n0164_001:0392c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聞月發大願：",
        "from": "T03n0164_001:0392c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫一切普含生，　　此等諸王同成佛，",
        "from": "T03n0164_001:0392c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所授師子王妙法，　　願其重罪得雲銷。",
        "from": "T03n0164_001:0392c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又念：",
        "from": "T03n0164_001:0392c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「過去阿僧祇劫，釋提桓因處忉利宮，以於過去食肉餘習，變身為鷹而逐於鴿。",
        "from": "T03n0164_001:0392c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我時作王，名曰尸毘，愍念其鴿，枰身割肉代鴿償命。",
        "from": "T03n0164_001:0392c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尸毘王者，我身是也，後當作王名曰聞月；",
        "from": "T03n0164_001:0392c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時帝釋化為鷹者，後當作王師子素駄。",
        "from": "T03n0164_001:0393a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋試我故尚生惡道，況餘眾生無慚專殺，食噉血肉無止足時？",
        "from": "T03n0164_001:0393a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一切眾生從無始來，靡不曾作父母親屬，易生鳥獸，如何忍食？",
        "from": "T03n0164_001:0393a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫食肉者，歷劫之中生於鳥獸，食他血肉展轉償命。",
        "from": "T03n0164_001:0393a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生人間專殺嗜肉，死墮阿鼻無時暫息；",
        "from": "T03n0164_001:0393a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人能斷一生食肉，乃至成佛無由再食。",
        "from": "T03n0164_001:0393a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說師子素駄娑王斷肉經",
        "from": "T03n0164_001:0393a08_100",
        "context_with_next_sentence": false
    }
]