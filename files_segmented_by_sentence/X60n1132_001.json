{
    "X60n1132_001:0708b06_0": "比丘尼受戒錄",
    "X60n1132_001:0708b08_0": "廣州南海寶象林沙門　弘贊在犙　述稽夫中邊得戒。",
    "X60n1132_001:0708b09_1": "始末源由。",
    "X60n1132_001:0708b09_2": "中制十人受具。",
    "X60n1132_001:0708b09_3": "邊許五人得戒。",
    "X60n1132_001:0708b10_4": "中是中天竺。",
    "X60n1132_001:0708b10_5": "天竺之東際白木調國。",
    "X60n1132_001:0708b10_6": "南際靖善塔。",
    "X60n1132_001:0708b11_7": "西際一師黎仙人山。",
    "X60n1132_001:0708b11_8": "北際柱國。",
    "X60n1132_001:0708b11_9": "自此四外。",
    "X60n1132_001:0708b11_10": "名為邊國。",
    "X60n1132_001:0708b12_11": "震旦乃在白木調東二萬七千餘里。",
    "X60n1132_001:0708b12_12": "開持律五人得授大戒。",
    "X60n1132_001:0708b13_13": "昔漢明帝初。",
    "X60n1132_001:0708b13_14": "摩騰法蘭二法師來至此土。",
    "X60n1132_001:0708b14_0": "與人出家。",
    "X60n1132_001:0708b14_1": "唯剃鬚髮。",
    "X60n1132_001:0708b14_2": "披縵條衣。",
    "X60n1132_001:0708b14_3": "授彼五戒十戒而已。",
    "X60n1132_001:0708b15_0": "以不滿五人。",
    "X60n1132_001:0708b15_1": "不得受具。",
    "X60n1132_001:0708b15_2": "後至漢桓帝。",
    "X60n1132_001:0708b15_3": "一百餘年內。",
    "X60n1132_001:0708b15_4": "猶三歸五戒十戒。",
    "X60n1132_001:0708b16_5": "遞相傳授。",
    "X60n1132_001:0708b16_6": "桓帝已後。",
    "X60n1132_001:0708b16_7": "北天竺國。",
    "X60n1132_001:0708b16_8": "有支法領等五沙門。",
    "X60n1132_001:0708b17_9": "來至漢地。",
    "X60n1132_001:0708b17_10": "始於長安與人授具足戒。",
    "X60n1132_001:0708b18_0": "其時大律未有。",
    "X60n1132_001:0708b18_1": "唯口誦出戒本一卷。",
    "X60n1132_001:0708b18_2": "羯磨一卷。",
    "X60n1132_001:0708b18_3": "流行此土。",
    "X60n1132_001:0708b19_4": "時尼眾來求受戒。",
    "X60n1132_001:0708b19_5": "五僧曰。",
    "X60n1132_001:0708b19_6": "如律所明。",
    "X60n1132_001:0708b19_7": "唯開邊地五人僧受具戒。",
    "X60n1132_001:0708b20_8": "不論尼眾。",
    "X60n1132_001:0708b20_9": "是時諸尼辭退而還。",
    "X60n1132_001:0708b20_10": "泣淚如雨。",
    "X60n1132_001:0708b21_11": "曹魏初三年。",
    "X60n1132_001:0708b21_12": "中天竺曇摩迦羅(此云法時)。",
    "X60n1132_001:0708b21_13": "至雒陽。",
    "X60n1132_001:0708b21_14": "譯出戒律。",
    "X60n1132_001:0708b22_15": "立羯磨受法。",
    "X60n1132_001:0708b22_16": "準用十僧。",
    "X60n1132_001:0708b22_17": "於是佛法大行震旦。",
    "X60n1132_001:0708b23_0": "為東夏受戒律之始也。",
    "X60n1132_001:0708b23_1": "時漢末魏初。",
    "X60n1132_001:0708b23_2": "東天竺國。",
    "X60n1132_001:0708b23_3": "有二尼來到長安。",
    "X60n1132_001:0708b24_4": "見諸尼眾問曰。",
    "X60n1132_001:0708b24_5": "汝等誰邊受戒。",
    "X60n1132_001:0708b24_6": "尼眾答曰。",
    "X60n1132_001:0708c01_7": "我到大僧所。",
    "X60n1132_001:0708c01_8": "受五戒十戒而已。",
    "X60n1132_001:0708c01_9": "二尼歎曰。",
    "X60n1132_001:0708c01_10": "邊地尼眾。",
    "X60n1132_001:0708c02_11": "悉未有具。",
    "X60n1132_001:0708c02_12": "即為還本國。",
    "X60n1132_001:0708c02_13": "化得一十五人來。",
    "X60n1132_001:0708c02_14": "三人在雪山死。",
    "X60n1132_001:0708c03_15": "二人墮黑澗死。",
    "X60n1132_001:0708c03_16": "唯餘十人到此。",
    "X60n1132_001:0708c03_17": "諸尼悉赴京師。",
    "X60n1132_001:0708c04_18": "與授具戒。",
    "X60n1132_001:0708c04_19": "後到吳地。",
    "X60n1132_001:0708c04_20": "亦與彼尼眾受具。",
    "X60n1132_001:0708c04_21": "西尼思慕本鄉。",
    "X60n1132_001:0708c05_22": "遂附舶南海而還。",
    "X60n1132_001:0708c05_23": "及至上船。",
    "X60n1132_001:0708c05_24": "唯有七人。",
    "X60n1132_001:0708c05_25": "三人命終。",
    "X60n1132_001:0708c06_26": "來去經途十有餘年。",
    "X60n1132_001:0708c06_27": "又按高僧傳。",
    "X60n1132_001:0708c06_28": "宋元嘉十年。",
    "X60n1132_001:0708c06_29": "西天僧伽跋摩。",
    "X60n1132_001:0708c07_30": "至建康。",
    "X60n1132_001:0708c07_31": "敕住平陸寺。",
    "X60n1132_001:0708c07_32": "為京師沙門慧照三百七十人。",
    "X60n1132_001:0708c08_33": "渡蔡洲岸。",
    "X60n1132_001:0708c08_34": "於船中再受具戒。",
    "X60n1132_001:0708c08_35": "或問其意。",
    "X60n1132_001:0708c09_0": "照曰。",
    "X60n1132_001:0708c09_1": "以疑先受。",
    "X60n1132_001:0708c09_2": "若中若下。",
    "X60n1132_001:0708c09_3": "更求增勝。",
    "X60n1132_001:0708c09_4": "故須重受。",
    "X60n1132_001:0708c09_5": "依本臘次。",
    "X60n1132_001:0708c10_6": "十一年。",
    "X60n1132_001:0708c10_7": "求那跋摩。",
    "X60n1132_001:0708c10_8": "於南林寺立戒壇。",
    "X60n1132_001:0708c10_9": "為僧尼授戒。",
    "X60n1132_001:0708c11_10": "為震旦戒壇之始。",
    "X60n1132_001:0708c11_11": "時師子國。",
    "X60n1132_001:0708c11_12": "比丘尼八人來未幾。",
    "X60n1132_001:0708c12_0": "復有尼鐵索羅三人至。",
    "X60n1132_001:0708c12_1": "足為十眾。",
    "X60n1132_001:0708c12_2": "乃請僧伽跋摩為師。",
    "X60n1132_001:0708c13_3": "為景福寺尼慧果等。",
    "X60n1132_001:0708c13_4": "於南林戒壇。",
    "X60n1132_001:0708c13_5": "依二部重受具戒。",
    "X60n1132_001:0708c14_6": "度三百餘人。",
    "X60n1132_001:0708c14_7": "噫。",
    "X60n1132_001:0708c14_8": "古人忘身為法。",
    "X60n1132_001:0708c14_9": "不憚數萬里而來。",
    "X60n1132_001:0708c15_0": "然此方得戒者。",
    "X60n1132_001:0708c15_1": "豈可不生難遭想哉。",
    "X60n1132_001:0708c15_2": "惜夫今當末法。",
    "X60n1132_001:0708c16_0": "知法秉羯磨者難得。",
    "X60n1132_001:0708c16_1": "而二部僧尼受戒。",
    "X60n1132_001:0708c16_2": "失傳久矣。",
    "X60n1132_001:0708c16_3": "昔摩騰羅漢。",
    "X60n1132_001:0708c17_4": "并諸賢哲。",
    "X60n1132_001:0708c17_5": "多是果位聖人。",
    "X60n1132_001:0708c17_6": "尚不敢違律。",
    "X60n1132_001:0708c17_7": "僧不滿數。",
    "X60n1132_001:0708c18_8": "與人授具。",
    "X60n1132_001:0708c18_9": "一部僧而與尼授大戒。",
    "X60n1132_001:0708c18_10": "我等何人。",
    "X60n1132_001:0708c19_0": "敢違佛教。",
    "X60n1132_001:0708c19_1": "滅佛正法。",
    "X60n1132_001:0708c19_2": "致他永失比丘比丘尼性。",
    "X60n1132_001:0708c19_3": "得虗假名。",
    "X60n1132_001:0708c20_4": "授受俱成非法矣。",
    "X60n1132_001:0708c20_5": "順治十四年。",
    "X60n1132_001:0708c20_6": "余在廣州羊城。",
    "X60n1132_001:0708c21_0": "時各縣餘尼來求受具。",
    "X60n1132_001:0708c21_1": "余辭不獲已。",
    "X60n1132_001:0708c21_2": "因立二部僧。",
    "X60n1132_001:0708c21_3": "各滿十人。",
    "X60n1132_001:0708c22_4": "與授大戒。",
    "X60n1132_001:0708c22_5": "自後十人難得。",
    "X60n1132_001:0708c22_6": "但有五人以上。",
    "X60n1132_001:0708c22_7": "亦與為授。",
    "X60n1132_001:0708c23_8": "要須持律清淨。",
    "X60n1132_001:0708c23_9": "故云邊地持律五人得受具戒。",
    "X60n1132_001:0708c24_10": "其尼親教師。",
    "X60n1132_001:0708c24_11": "要滿十夏。",
    "X60n1132_001:0708c24_12": "而羯磨教授二師。",
    "X60n1132_001:0708c24_13": "及餘證人。",
    "X60n1132_001:0709a01_14": "無論歲臘。",
    "X60n1132_001:0709a01_15": "事須解律。",
    "X60n1132_001:0709a01_16": "縱律未能精鍊。",
    "X60n1132_001:0709a01_17": "其羯磨者。",
    "X60n1132_001:0709a01_18": "必是持律明了。",
    "X60n1132_001:0709a02_19": "方許秉法。",
    "X60n1132_001:0709a02_20": "若不如是。",
    "X60n1132_001:0709a02_21": "強與他授。",
    "X60n1132_001:0709a02_22": "令他盡壽戒不霑身。",
    "X60n1132_001:0709a03_23": "罪非小也。",
    "X60n1132_001:0709a03_24": "雖云邊地五人僧受。",
    "X60n1132_001:0709a03_25": "不論尼眾。",
    "X60n1132_001:0709a04_26": "斯乃古人慎重。",
    "X60n1132_001:0709a04_27": "邊地僧尚難得。",
    "X60n1132_001:0709a04_28": "尼眾何能易有。",
    "X60n1132_001:0709a04_29": "茲以竊推。",
    "X60n1132_001:0709a05_30": "律既許僧。",
    "X60n1132_001:0709a05_31": "尼必預列。",
    "X60n1132_001:0709a05_32": "昔迦旃延尊者。",
    "X60n1132_001:0709a05_33": "在西天竺。",
    "X60n1132_001:0709a06_34": "阿槃提國。",
    "X60n1132_001:0709a06_35": "有長者子名億耳。",
    "X60n1132_001:0709a06_36": "出家求受具戒。",
    "X60n1132_001:0709a06_37": "時彼國無十人僧。",
    "X60n1132_001:0709a07_38": "不得受具。",
    "X60n1132_001:0709a07_39": "乃往白佛。",
    "X60n1132_001:0709a07_40": "佛聽邊地五人得受。",
    "X60n1132_001:0709a08_41": "時因緣在僧。",
    "X60n1132_001:0709a08_42": "故未及論尼。",
    "X60n1132_001:0709a08_43": "況今末法出家。",
    "X60n1132_001:0709a08_44": "遇正教者實難。",
    "X60n1132_001:0709a09_45": "若不論尼。",
    "X60n1132_001:0709a09_46": "則尼部全缺。",
    "X60n1132_001:0709a09_47": "八敬誰修。",
    "X60n1132_001:0709a09_48": "雖是邊地。",
    "X60n1132_001:0709a10_0": "而有持律清淨十人。",
    "X60n1132_001:0709a10_1": "別揀五人。",
    "X60n1132_001:0709a10_2": "律文不聽。",
    "X60n1132_001:0709a10_3": "知非持戒清淨。",
    "X60n1132_001:0709a11_4": "方任揀擇。",
    "X60n1132_001:0709a11_5": "以受戒事大。",
    "X60n1132_001:0709a11_6": "一不如法。",
    "X60n1132_001:0709a11_7": "則戒體斯失。",
    "X60n1132_001:0709a12_0": "今諸方叢席。",
    "X60n1132_001:0709a12_1": "為人授具。",
    "X60n1132_001:0709a12_2": "既不知作法結僧大界。",
    "X60n1132_001:0709a12_3": "戒壇奚立。",
    "X60n1132_001:0709a13_4": "則戒無由得矣。",
    "X60n1132_001:0709a13_5": "故云。",
    "X60n1132_001:0709a13_6": "若不結界。",
    "X60n1132_001:0709a13_7": "一切羯磨受戒等法。",
    "X60n1132_001:0709a14_8": "俱是空作。",
    "X60n1132_001:0709a14_9": "復不依律作白羯磨。",
    "X60n1132_001:0709a14_10": "唯師自心。",
    "X60n1132_001:0709a14_11": "在沙彌白衣前。",
    "X60n1132_001:0709a15_12": "杜撰唱說。",
    "X60n1132_001:0709a15_13": "非法為法。",
    "X60n1132_001:0709a15_14": "以譌傳譌。",
    "X60n1132_001:0709a15_15": "遞相踵習。",
    "X60n1132_001:0709a16_0": "沿波日久。",
    "X60n1132_001:0709a16_1": "不覺其非。",
    "X60n1132_001:0709a16_2": "佛言。",
    "X60n1132_001:0709a16_3": "若有秉羯磨說戒。",
    "X60n1132_001:0709a16_4": "則正法未滅世間。",
    "X60n1132_001:0709a17_5": "又云。",
    "X60n1132_001:0709a17_6": "毗尼藏住。",
    "X60n1132_001:0709a17_7": "佛法亦住。",
    "X60n1132_001:0709a17_8": "是故弘紹之賓。",
    "X60n1132_001:0709a18_0": "特宜遵教。",
    "X60n1132_001:0709a18_1": "俾正法而恒存。",
    "X60n1132_001:0709a18_2": "木叉而永固也(戒壇。",
    "X60n1132_001:0709a18_3": "即戒場。",
    "X60n1132_001:0709a18_4": "在大界內結)。",
    "X60n1132_001:0709a19_5": "已上略述得戒緣由。",
    "X60n1132_001:0709a19_6": "向下錄得戒和尚阿闍黎。",
    "X60n1132_001:0709a19_7": "二部僧名。",
    "X60n1132_001:0709a20_8": "并記自受戒年月日時。",
    "X60n1132_001:0709a20_9": "以識戒臘尊卑也。",
    "X60n1132_001:0709a21_0": "比丘尼弟子　　　　　　年　　月　　日　時&;生族姓　係　　府　　縣人於　　　　年&;月　　日拜　　師出家&;　僧部&;　　　　年　　月　　日依　　和尚受沙彌尼&;戒於　　　　年　　月　　日　時受&;　和尚具足戒&;秉羯磨阿闍黎名　　號　　軌範師&;尊證僧伽&;　　大德　　　大德　　　大德　　　大德&;　　大德　　　大德　　　大德&;　尼部&;親教師尼名　　字&;羯磨師尼名　　字&;教授師尼名　　字&;證戒尼僧&;　　賢部　　　賢部　　　賢部　　　賢部&;　　賢部　　　賢部　　　賢部&;附作法略儀&;初受具足戒尼。",
    "X60n1132_001:0709b16_1": "未能即閱大律。",
    "X60n1132_001:0709b16_2": "其親教闍黎二師。",
    "X60n1132_001:0709b16_3": "當與戒本令其熟讀。",
    "X60n1132_001:0709b17_4": "使知護持。",
    "X60n1132_001:0709b17_5": "無致虧犯。",
    "X60n1132_001:0709b17_6": "及識布薩。",
    "X60n1132_001:0709b17_7": "自恣。",
    "X60n1132_001:0709b18_8": "受衣。",
    "X60n1132_001:0709b18_9": "淨施等法也。",
    "X60n1132_001:0709b19_0": "布薩法(半月半月布薩。",
    "X60n1132_001:0709b19_1": "下至有四比丘尼。",
    "X60n1132_001:0709b19_2": "即應誦戒本。",
    "X60n1132_001:0709b19_3": "不足四人。",
    "X60n1132_001:0709b19_4": "三人。",
    "X60n1132_001:0709b19_5": "二人。",
    "X60n1132_001:0709b19_6": "當對首布薩。",
    "X60n1132_001:0709b19_7": "若有所犯。",
    "X60n1132_001:0709b20_8": "應先懺悔已。",
    "X60n1132_001:0709b20_9": "然後布薩)。",
    "X60n1132_001:0709b21_0": "對首說戒法(至布薩日。",
    "X60n1132_001:0709b21_1": "若有三人。",
    "X60n1132_001:0709b21_2": "各各相向露頂。",
    "X60n1132_001:0709b21_3": "脫屣。",
    "X60n1132_001:0709b21_4": "互跪。",
    "X60n1132_001:0709b21_5": "作如是言)。",
    "X60n1132_001:0709b22_0": "二大姊。",
    "X60n1132_001:0709b22_1": "一心念。",
    "X60n1132_001:0709b22_2": "今僧十(五四)日說戒。",
    "X60n1132_001:0709b22_3": "我某甲比丘尼清淨(三說。",
    "X60n1132_001:0709b23_4": "後二人。",
    "X60n1132_001:0709b23_5": "亦如是說。",
    "X60n1132_001:0709b23_6": "若只有二人。",
    "X60n1132_001:0709b23_7": "除上二字。",
    "X60n1132_001:0709b23_8": "即云大姊)。",
    "X60n1132_001:0709b24_0": "心念說戒法(若只有一人。",
    "X60n1132_001:0709b24_1": "應心念口言)。",
    "X60n1132_001:0709c01_0": "今日眾僧十(五四)日說戒。",
    "X60n1132_001:0709c01_1": "我某甲比丘尼清淨(三說)。",
    "X60n1132_001:0709c02_0": "對首安居法(前安居四月十六日。",
    "X60n1132_001:0709c02_1": "應對一知法比丘尼言)。",
    "X60n1132_001:0709c03_0": "大姊一心念。",
    "X60n1132_001:0709c03_1": "我某甲比丘尼。",
    "X60n1132_001:0709c03_2": "依某僧伽藍(若在村內。",
    "X60n1132_001:0709c03_3": "非僧住處。",
    "X60n1132_001:0709c04_0": "應云某聚落。",
    "X60n1132_001:0709c04_1": "若在別房。",
    "X60n1132_001:0709c04_2": "應云某房)。",
    "X60n1132_001:0709c04_3": "前三月夏安居。",
    "X60n1132_001:0709c04_4": "房舍破。",
    "X60n1132_001:0709c04_5": "修治故。",
    "X60n1132_001:0709c04_6": "(三說。",
    "X60n1132_001:0709c05_0": "彼應語云)好。",
    "X60n1132_001:0709c05_1": "(答言)善(若後安居。",
    "X60n1132_001:0709c05_2": "至五月十六日。",
    "X60n1132_001:0709c05_3": "應云後三月)。",
    "X60n1132_001:0709c06_0": "心念安居法(若無所依人對作法。",
    "X60n1132_001:0709c06_1": "即自心念口言)。",
    "X60n1132_001:0709c07_0": "我某甲比丘尼。",
    "X60n1132_001:0709c07_1": "依某處某房。",
    "X60n1132_001:0709c07_2": "前三月夏安居(三說)。",
    "X60n1132_001:0709c08_0": "對首受日法(若有佛法僧事。",
    "X60n1132_001:0709c08_1": "或檀越父母等請喚。",
    "X60n1132_001:0709c08_2": "不及即日還。",
    "X60n1132_001:0709c08_3": "若須二日。",
    "X60n1132_001:0709c08_4": "乃至七日。",
    "X60n1132_001:0709c09_5": "應對一比丘尼言)。",
    "X60n1132_001:0709c10_0": "大姊一心念。",
    "X60n1132_001:0709c10_1": "我某甲比丘尼。",
    "X60n1132_001:0709c10_2": "受七日法出界外。",
    "X60n1132_001:0709c10_3": "為某事故。",
    "X60n1132_001:0709c11_4": "還此中安居。",
    "X60n1132_001:0709c11_5": "白大姊令知(三說。",
    "X60n1132_001:0709c11_6": "不應為飲食衣物故去也。",
    "X60n1132_001:0709c11_7": "若前事不及七日還。",
    "X60n1132_001:0709c12_8": "當從僧乞十日。",
    "X60n1132_001:0709c12_9": "半月一月。",
    "X60n1132_001:0709c12_10": "羯磨去)。",
    "X60n1132_001:0709c13_0": "對首自恣法(凡有所犯。",
    "X60n1132_001:0709c13_1": "應先懺悔已。",
    "X60n1132_001:0709c13_2": "然後自恣。",
    "X60n1132_001:0709c13_3": "若住處有五比丘尼。",
    "X60n1132_001:0709c13_4": "應僧中差受自恣。",
    "X60n1132_001:0709c14_5": "若無五人。",
    "X60n1132_001:0709c14_6": "四人當對首各各相向。",
    "X60n1132_001:0709c14_7": "作如是言)。",
    "X60n1132_001:0709c15_0": "三大姊一心念。",
    "X60n1132_001:0709c15_1": "今日眾僧自恣。",
    "X60n1132_001:0709c15_2": "我某甲比丘尼自恣清淨(三說。",
    "X60n1132_001:0709c16_3": "若有三人二人亦如是作)。",
    "X60n1132_001:0709c17_0": "心念自恣法(若只有一人。",
    "X60n1132_001:0709c17_1": "應心念口言)。",
    "X60n1132_001:0709c18_0": "今日眾僧自恣。",
    "X60n1132_001:0709c18_1": "我某甲比丘尼。",
    "X60n1132_001:0709c18_2": "自恣清淨(三說)。",
    "X60n1132_001:0709c19_0": "受五衣法(佛言。",
    "X60n1132_001:0709c19_1": "五衣應受持。",
    "X60n1132_001:0709c19_2": "有衣不受持。",
    "X60n1132_001:0709c19_3": "得罪。",
    "X60n1132_001:0709c19_4": "過十日。",
    "X60n1132_001:0709c19_5": "即犯捨墮。",
    "X60n1132_001:0709c19_6": "若得如法衣。",
    "X60n1132_001:0709c19_7": "應具威儀。",
    "X60n1132_001:0709c20_8": "對一比丘尼。",
    "X60n1132_001:0709c20_9": "或親教師。",
    "X60n1132_001:0709c20_10": "或阿闍黎。",
    "X60n1132_001:0709c20_11": "如是言)。",
    "X60n1132_001:0709c21_0": "大姊一心念。",
    "X60n1132_001:0709c21_1": "我比丘尼某甲。",
    "X60n1132_001:0709c21_2": "此安陀會。",
    "X60n1132_001:0709c21_3": "五條衣受。",
    "X60n1132_001:0709c21_4": "一長一短。",
    "X60n1132_001:0709c22_5": "割截衣持(三說)。",
    "X60n1132_001:0709c23_0": "大姊一心念。",
    "X60n1132_001:0709c23_1": "我比丘尼某甲。",
    "X60n1132_001:0709c23_2": "此鬱多羅僧。",
    "X60n1132_001:0709c23_3": "七條衣受。",
    "X60n1132_001:0709c24_0": "兩長一短。",
    "X60n1132_001:0709c24_1": "割截衣持(三說)。",
    "X60n1132_001:0710a01_0": "大姊一心念。",
    "X60n1132_001:0710a01_1": "我比丘尼某甲。",
    "X60n1132_001:0710a01_2": "是僧伽黎(若干)。",
    "X60n1132_001:0710a01_3": "條衣受(若干)。",
    "X60n1132_001:0710a02_0": "長(若干)短。",
    "X60n1132_001:0710a02_1": "割截衣持(三說)。",
    "X60n1132_001:0710a03_0": "大姊一心念。",
    "X60n1132_001:0710a03_1": "我比丘尼某甲。",
    "X60n1132_001:0710a03_2": "是覆肩衣受。",
    "X60n1132_001:0710a03_3": "長四肘。",
    "X60n1132_001:0710a03_4": "廣二肘半。",
    "X60n1132_001:0710a04_5": "是覆肩衣持(三說。",
    "X60n1132_001:0710a04_6": "佛制恐污三衣。",
    "X60n1132_001:0710a04_7": "用覆兩肩。",
    "X60n1132_001:0710a04_8": "然後著三衣在上)。",
    "X60n1132_001:0710a05_0": "大姊一心念。",
    "X60n1132_001:0710a05_1": "我比丘尼某甲。",
    "X60n1132_001:0710a05_2": "是衣厥修羅衣受。",
    "X60n1132_001:0710a05_3": "長四肘。",
    "X60n1132_001:0710a06_4": "廣二肘。",
    "X60n1132_001:0710a06_5": "是衣厥修羅衣持(三說。",
    "X60n1132_001:0710a06_6": "厥修羅。",
    "X60n1132_001:0710a06_7": "此云篅衣。",
    "X60n1132_001:0710a06_8": "即裙也。",
    "X60n1132_001:0710a06_9": "以兩頭縫合。",
    "X60n1132_001:0710a06_10": "形如小篅。",
    "X60n1132_001:0710a07_11": "著時入內。",
    "X60n1132_001:0710a07_12": "擡使過臍。",
    "X60n1132_001:0710a07_13": "各蹙兩邊雙排擪脊。",
    "X60n1132_001:0710a07_14": "繫之以絛。",
    "X60n1132_001:0710a07_15": "篅即穀圍也)。",
    "X60n1132_001:0710a08_0": "受尼師壇法(應云)。",
    "X60n1132_001:0710a09_0": "大姊一心念。",
    "X60n1132_001:0710a09_1": "我比丘尼某甲。",
    "X60n1132_001:0710a09_2": "此尼師壇。",
    "X60n1132_001:0710a09_3": "是我助身衣受(三說)。",
    "X60n1132_001:0710a11_0": "受鉢法",
    "X60n1132_001:0710a12_0": "大姊一心念。",
    "X60n1132_001:0710a12_1": "我比丘尼某甲。",
    "X60n1132_001:0710a12_2": "此鉢多羅。",
    "X60n1132_001:0710a12_3": "應量受。",
    "X60n1132_001:0710a12_4": "長用故(三說)。",
    "X60n1132_001:0710a14_0": "受十六枚器法(即日得器。",
    "X60n1132_001:0710a14_1": "應即日受。",
    "X60n1132_001:0710a14_2": "可須用者。",
    "X60n1132_001:0710a14_3": "十六枚。",
    "X60n1132_001:0710a14_4": "餘者當淨施。",
    "X60n1132_001:0710a14_5": "若遣與人。",
    "X60n1132_001:0710a15_0": "謂大釜。",
    "X60n1132_001:0710a15_1": "小釜。",
    "X60n1132_001:0710a15_2": "二蓋。",
    "X60n1132_001:0710a15_3": "水瓶。",
    "X60n1132_001:0710a15_4": "及蓋。",
    "X60n1132_001:0710a15_5": "洗瓶。",
    "X60n1132_001:0710a15_6": "及蓋。",
    "X60n1132_001:0710a15_7": "四盤。",
    "X60n1132_001:0710a15_8": "二小杓。",
    "X60n1132_001:0710a15_9": "二大杓。",
    "X60n1132_001:0710a15_10": "受云)。",
    "X60n1132_001:0710a16_0": "大姊一心念。",
    "X60n1132_001:0710a16_1": "我比丘尼某甲。",
    "X60n1132_001:0710a16_2": "此某器。",
    "X60n1132_001:0710a16_3": "是我十六枚數。",
    "X60n1132_001:0710a17_0": "今受(三說)。",
    "X60n1132_001:0710a18_0": "受非時藥(佛聽飲八種漿。",
    "X60n1132_001:0710a18_1": "即果汁。",
    "X60n1132_001:0710a18_2": "謂梨。",
    "X60n1132_001:0710a18_3": "棗。",
    "X60n1132_001:0710a18_4": "甘蔗。",
    "X60n1132_001:0710a18_5": "蒲萄。",
    "X60n1132_001:0710a18_6": "藕根等。",
    "X60n1132_001:0710a18_7": "應先淨人擪已。",
    "X60n1132_001:0710a18_8": "濾過。",
    "X60n1132_001:0710a18_9": "澄清。",
    "X60n1132_001:0710a19_10": "從淨人手受。",
    "X60n1132_001:0710a19_11": "應對一比丘尼云)。",
    "X60n1132_001:0710a20_0": "大姊一心念。",
    "X60n1132_001:0710a20_1": "我比丘尼某甲。",
    "X60n1132_001:0710a20_2": "有某病緣故。",
    "X60n1132_001:0710a20_3": "此某非時漿。",
    "X60n1132_001:0710a21_4": "為經非時服故。",
    "X60n1132_001:0710a21_5": "今於大姊邊受(三說)。",
    "X60n1132_001:0710a22_0": "受七日藥(酥。",
    "X60n1132_001:0710a22_1": "油。",
    "X60n1132_001:0710a22_2": "生酥。",
    "X60n1132_001:0710a22_3": "蜜。",
    "X60n1132_001:0710a22_4": "石蜜。",
    "X60n1132_001:0710a22_5": "一受得七日自手取服。",
    "X60n1132_001:0710a22_6": "八日即施與人。",
    "X60n1132_001:0710a22_7": "自不得服。",
    "X60n1132_001:0710a22_8": "應云)。",
    "X60n1132_001:0710a23_0": "大姊一心念。",
    "X60n1132_001:0710a23_1": "我比丘尼某甲。",
    "X60n1132_001:0710a23_2": "有某病緣故。",
    "X60n1132_001:0710a23_3": "此某七日藥。",
    "X60n1132_001:0710a24_4": "為共宿七日服故。",
    "X60n1132_001:0710a24_5": "今於大姊邊受(三說)。",
    "X60n1132_001:0710b01_0": "受盡形壽藥(謂丸。",
    "X60n1132_001:0710b01_1": "散。",
    "X60n1132_001:0710b01_2": "一切鹹酸等。",
    "X60n1132_001:0710b01_3": "不任為食者。",
    "X60n1132_001:0710b01_4": "一受得自取服盡。",
    "X60n1132_001:0710b01_5": "應云)。",
    "X60n1132_001:0710b02_0": "大姊一心念。",
    "X60n1132_001:0710b02_1": "我比丘尼某甲。",
    "X60n1132_001:0710b02_2": "有某病緣故。",
    "X60n1132_001:0710b02_3": "此某盡形壽藥。",
    "X60n1132_001:0710b03_4": "為共宿。",
    "X60n1132_001:0710b03_5": "長服故。",
    "X60n1132_001:0710b03_6": "今於大姊邊受(三說)。",
    "X60n1132_001:0710b04_0": "淨施法(有二種淨施。",
    "X60n1132_001:0710b04_1": "一真實施。",
    "X60n1132_001:0710b04_2": "二展轉淨施。",
    "X60n1132_001:0710b04_3": "真實淨施。",
    "X60n1132_001:0710b04_4": "應云)。",
    "X60n1132_001:0710b05_0": "大姊一心念。",
    "X60n1132_001:0710b05_1": "我比丘尼某甲。",
    "X60n1132_001:0710b05_2": "有此長衣。",
    "X60n1132_001:0710b05_3": "未作淨。",
    "X60n1132_001:0710b05_4": "今為淨故。",
    "X60n1132_001:0710b06_5": "捨與大姊。",
    "X60n1132_001:0710b06_6": "為真實淨故(謂真實捨與他。",
    "X60n1132_001:0710b06_7": "欲要著。",
    "X60n1132_001:0710b06_8": "應問彼。",
    "X60n1132_001:0710b06_9": "乃著)。",
    "X60n1132_001:0710b07_0": "展轉淨施法(比丘尼受戒已。",
    "X60n1132_001:0710b07_1": "除五衣外。",
    "X60n1132_001:0710b07_2": "所有一切新舊衣服。",
    "X60n1132_001:0710b07_3": "對一比丘尼說淨。",
    "X60n1132_001:0710b07_4": "不說。",
    "X60n1132_001:0710b08_5": "過十日即犯捨墮。",
    "X60n1132_001:0710b08_6": "後凡所得衣。",
    "X60n1132_001:0710b08_7": "若布。",
    "X60n1132_001:0710b08_8": "下至長一尺四寸。",
    "X60n1132_001:0710b08_9": "廣七寸。",
    "X60n1132_001:0710b08_10": "即須說淨。",
    "X60n1132_001:0710b08_11": "作如是言)。",
    "X60n1132_001:0710b09_0": "大姊一心念。",
    "X60n1132_001:0710b09_1": "我比丘尼某甲。",
    "X60n1132_001:0710b09_2": "有長衣。",
    "X60n1132_001:0710b09_3": "未作淨。",
    "X60n1132_001:0710b09_4": "為淨故。",
    "X60n1132_001:0710b10_0": "施與大姊。",
    "X60n1132_001:0710b10_1": "為展轉淨故。",
    "X60n1132_001:0710b10_2": "(彼受淨者。",
    "X60n1132_001:0710b10_3": "應云)大姊。",
    "X60n1132_001:0710b10_4": "汝有此長衣。",
    "X60n1132_001:0710b10_5": "未作淨。",
    "X60n1132_001:0710b11_6": "為淨故。",
    "X60n1132_001:0710b11_7": "與我。",
    "X60n1132_001:0710b11_8": "我今受之。",
    "X60n1132_001:0710b11_9": "(受已語云)汝施與誰。",
    "X60n1132_001:0710b11_10": "(答云)施與某甲。",
    "X60n1132_001:0710b12_11": "(受淨者云)大姊。",
    "X60n1132_001:0710b12_12": "汝是長衣未作淨。",
    "X60n1132_001:0710b12_13": "為淨故施與我。",
    "X60n1132_001:0710b12_14": "今受之。",
    "X60n1132_001:0710b13_15": "受已。",
    "X60n1132_001:0710b13_16": "汝與某甲。",
    "X60n1132_001:0710b13_17": "是衣某甲已有。",
    "X60n1132_001:0710b13_18": "汝為某甲善護持著。",
    "X60n1132_001:0710b14_19": "隨因緣(當稱一比丘尼名為淨主。",
    "X60n1132_001:0710b14_20": "或親教師。",
    "X60n1132_001:0710b14_21": "或闍黎師。",
    "X60n1132_001:0710b14_22": "若淨主死。",
    "X60n1132_001:0710b14_23": "即須別稱一淨主。",
    "X60n1132_001:0710b14_24": "將前所有衣物。",
    "X60n1132_001:0710b15_25": "稱後淨主名。",
    "X60n1132_001:0710b15_26": "說淨)。",
    "X60n1132_001:0710b16_0": "(其餘一切作法行護威儀。",
    "X60n1132_001:0710b16_1": "備載羯磨本。",
    "X60n1132_001:0710b16_2": "及沙門日用中。",
    "X60n1132_001:0710b16_3": "自當檢閱)。",
    "X60n1132_001:0710b17_0": "八不可過法(亦云八敬法。",
    "X60n1132_001:0710b17_1": "佛告阿難。",
    "X60n1132_001:0710b17_2": "我今為女人。",
    "X60n1132_001:0710b17_3": "制八盡形壽。",
    "X60n1132_001:0710b17_4": "不可過法。",
    "X60n1132_001:0710b17_5": "若能行者。",
    "X60n1132_001:0710b18_6": "即是受戒。",
    "X60n1132_001:0710b18_7": "何等為八)。",
    "X60n1132_001:0710b19_0": "一。",
    "X60n1132_001:0710b19_1": "雖百歲比丘尼。",
    "X60n1132_001:0710b19_2": "見新受戒比丘。",
    "X60n1132_001:0710b19_3": "應起迎逆。",
    "X60n1132_001:0710b19_4": "禮拜。",
    "X60n1132_001:0710b19_5": "與敷淨座令坐。",
    "X60n1132_001:0710b20_6": "如此法應尊重。",
    "X60n1132_001:0710b20_7": "恭敬讚歎。",
    "X60n1132_001:0710b20_8": "盡形壽不可過。",
    "X60n1132_001:0710b22_0": "二。",
    "X60n1132_001:0710b22_1": "比丘尼不得罵詈比丘。",
    "X60n1132_001:0710b22_2": "訶責。",
    "X60n1132_001:0710b22_3": "不應誹謗。",
    "X60n1132_001:0710b22_4": "言破戒。",
    "X60n1132_001:0710b22_5": "破見。",
    "X60n1132_001:0710b23_6": "破威儀。",
    "X60n1132_001:0710b23_7": "如此法應尊重(餘詞如上說)。",
    "X60n1132_001:0710b24_0": "三。",
    "X60n1132_001:0710b24_1": "比丘尼不應為比丘作舉。",
    "X60n1132_001:0710b24_2": "作憶念。",
    "X60n1132_001:0710b24_3": "作自言。",
    "X60n1132_001:0710b24_4": "不應遮他覓罪。",
    "X60n1132_001:0710c01_5": "遮說戒。",
    "X60n1132_001:0710c01_6": "遮自恣。",
    "X60n1132_001:0710c01_7": "比丘尼。",
    "X60n1132_001:0710c01_8": "不應訶比丘。",
    "X60n1132_001:0710c01_9": "比丘應訶比丘尼。",
    "X60n1132_001:0710c02_10": "如此法。",
    "X60n1132_001:0710c02_11": "應尊重(餘詞如上)。",
    "X60n1132_001:0710c03_0": "四。",
    "X60n1132_001:0710c03_1": "式叉摩那學戒已。",
    "X60n1132_001:0710c03_2": "從比丘僧乞受大戒。",
    "X60n1132_001:0710c03_3": "如此法。",
    "X60n1132_001:0710c03_4": "應尊重(餘詞如上)。",
    "X60n1132_001:0710c05_0": "五。",
    "X60n1132_001:0710c05_1": "比丘尼犯僧殘罪。",
    "X60n1132_001:0710c05_2": "應二部僧中。",
    "X60n1132_001:0710c05_3": "行摩那埵。",
    "X60n1132_001:0710c05_4": "如此法。",
    "X60n1132_001:0710c06_0": "應尊重(餘詞如上)。",
    "X60n1132_001:0710c07_0": "六。",
    "X60n1132_001:0710c07_1": "比丘尼半月。",
    "X60n1132_001:0710c07_2": "從僧乞教授。",
    "X60n1132_001:0710c07_3": "如此法。",
    "X60n1132_001:0710c07_4": "應尊重(餘詞如上)。",
    "X60n1132_001:0710c08_0": "七。",
    "X60n1132_001:0710c08_1": "比丘尼不應在無比丘處夏安居。",
    "X60n1132_001:0710c08_2": "如此法。",
    "X60n1132_001:0710c08_3": "應尊重(餘詞如上)。",
    "X60n1132_001:0710c10_0": "八。",
    "X60n1132_001:0710c10_1": "比丘尼僧。",
    "X60n1132_001:0710c10_2": "夏安居竟。",
    "X60n1132_001:0710c10_3": "應比丘僧中。",
    "X60n1132_001:0710c10_4": "求三事自恣。",
    "X60n1132_001:0710c10_5": "見聞疑。",
    "X60n1132_001:0710c11_6": "如此法。",
    "X60n1132_001:0710c11_7": "應尊重(餘詞如上)。",
    "X60n1132_001:0710c11_8": "如是阿難。",
    "X60n1132_001:0710c11_9": "我今說此八不可過法。",
    "X60n1132_001:0710c12_10": "譬如有人於大水上安橋梁而渡。",
    "X60n1132_001:0710c12_11": "女人若能行者。",
    "X60n1132_001:0710c13_12": "即是受戒(云云)。",
    "X60n1132_001:0710c15_0": "比丘尼受戒錄(終)"
}