[
    {
        "source_sentence": "佛說齋法清淨經",
        "from": "T85n2900_001:1431c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛在竹林精舍。與二百五十",
        "from": "T85n2900_001:1431c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘比丘尼優婆塞優婆夷。及諸天龍八部",
        "from": "T85n2900_001:1431c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼神菩薩摩訶薩。",
        "from": "T85n2900_001:1431c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時集會。",
        "from": "T85n2900_001:1431c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大目揵連從坐而起。",
        "from": "T85n2900_001:1431c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為佛作禮。",
        "from": "T85n2900_001:1431c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言。",
        "from": "T85n2900_001:1431c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T85n2900_001:1431c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我昔日時入城乞食。",
        "from": "T85n2900_001:1431c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道逢見有數千萬人。",
        "from": "T85n2900_001:1431c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭如太山。",
        "from": "T85n2900_001:1431c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腹如須彌。",
        "from": "T85n2900_001:1431c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咽頸如針。",
        "from": "T85n2900_001:1431c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行步之時如五百乘車聲。",
        "from": "T85n2900_001:1431c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烟大口然。",
        "from": "T85n2900_001:1431c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致。",
        "from": "T85n2900_001:1431c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊為我演說。",
        "from": "T85n2900_001:1431c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2900_001:1431c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦哉苦哉。",
        "from": "T85n2900_001:1431c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告目連曰。",
        "from": "T85n2900_001:1431c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此餓鬼者。",
        "from": "T85n2900_001:1431c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先世之時為造齋食供具食訖。",
        "from": "T85n2900_001:1431c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中後破齋便得如是罪報。",
        "from": "T85n2900_001:1431c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食他齋食不持齋者亦得是報。",
        "from": "T85n2900_001:1431c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作齋訖。",
        "from": "T85n2900_001:1431c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有餘食不得輒與不齋人。",
        "from": "T85n2900_001:1431c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食過齋訖後施主啟白。",
        "from": "T85n2900_001:1431c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾僧請乞歡喜。",
        "from": "T85n2900_001:1431c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有餘食眾僧應施弟子。",
        "from": "T85n2900_001:1431c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後歡喜隨口意用。",
        "from": "T85n2900_001:1431c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不諮請眾僧施主二俱得罪。",
        "from": "T85n2900_001:1431c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目連答曰。",
        "from": "T85n2900_001:1431c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實如聖教。",
        "from": "T85n2900_001:1431c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2900_001:1431c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切檀越施設法會供齋調度。",
        "from": "T85n2900_001:1431c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能持齋者可得與食。",
        "from": "T85n2900_001:1431c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不持齋者不得輒食。",
        "from": "T85n2900_001:1431c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此飯獲罪無量無邊。",
        "from": "T85n2900_001:1431c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能一日持齋。",
        "from": "T85n2900_001:1431c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得六十萬世餘糧。",
        "from": "T85n2900_001:1431c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不持齋食齋食者。",
        "from": "T85n2900_001:1431c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六十萬世墮餓鬼中。",
        "from": "T85n2900_001:1431c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T85n2900_001:1431c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此信施重食。",
        "from": "T85n2900_001:1431c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧可吞熱鐵丸不食此飯。",
        "from": "T85n2900_001:1431c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吞熱鐵丸須臾間。",
        "from": "T85n2900_001:1431c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自食他信施久受懃苦。",
        "from": "T85n2900_001:1431c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百萬世受餓鬼苦。",
        "from": "T85n2900_001:1431c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但有設會之處。",
        "from": "T85n2900_001:1431c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如法作齋。",
        "from": "T85n2900_001:1431c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得懷俠餘殘。",
        "from": "T85n2900_001:1431c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸給親友宗親。",
        "from": "T85n2900_001:1431c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食此餅飯。",
        "from": "T85n2900_001:1431c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若懷俠餘殘。",
        "from": "T85n2900_001:1431c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百萬世在地獄中。",
        "from": "T85n2900_001:1431c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有熱鐵輪左右而過腋脅。",
        "from": "T85n2900_001:1431c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燋爛受大苦惱。",
        "from": "T85n2900_001:1431c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切齋食不可不慎。",
        "from": "T85n2900_001:1431c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不粒米麥化作熱鐵丸。",
        "from": "T85n2900_001:1431c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切施主欲設福會。",
        "from": "T85n2900_001:1432a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於先甞此食者都是殘食。",
        "from": "T85n2900_001:1432a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐作此會。",
        "from": "T85n2900_001:1432a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如不作。",
        "from": "T85n2900_001:1432a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T85n2900_001:1432a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天鬼神不歡喜故。",
        "from": "T85n2900_001:1432a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人於先甞䬽者。",
        "from": "T85n2900_001:1432a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦五百萬世受餓鬼苦。",
        "from": "T85n2900_001:1432a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今以後欲得福者。",
        "from": "T85n2900_001:1432a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好當清淨如上法作淨。",
        "from": "T85n2900_001:1432a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗身手麩糠。",
        "from": "T85n2900_001:1432a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於先安置屏處。",
        "from": "T85n2900_001:1432a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏蓋實莫甞䬽。",
        "from": "T85n2900_001:1432a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法作齋可得福利。",
        "from": "T85n2900_001:1432a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天歡喜。",
        "from": "T85n2900_001:1432a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百神慶悅。",
        "from": "T85n2900_001:1432a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善神擁護。",
        "from": "T85n2900_001:1432a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經不虛言。",
        "from": "T85n2900_001:1432a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福報如影響。",
        "from": "T85n2900_001:1432a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此餓鬼本從人道中來。",
        "from": "T85n2900_001:1432a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不淨手觸眾僧衣鉢。",
        "from": "T85n2900_001:1432a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不淨手濁沙門淨食。",
        "from": "T85n2900_001:1432a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不淨手著沙門食中。",
        "from": "T85n2900_001:1432a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不淨食將施眾僧及與父母。",
        "from": "T85n2900_001:1432a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後五百世墮餓鬼中。",
        "from": "T85n2900_001:1432a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常食不淨。",
        "from": "T85n2900_001:1432a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始欲上廁食噉糞屎。",
        "from": "T85n2900_001:1432a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼廁神手把鐵杖。",
        "from": "T85n2900_001:1432a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逆彼餓鬼不得近廁。",
        "from": "T85n2900_001:1432a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒食膿血涕唾及蕩除惡汁。",
        "from": "T85n2900_001:1432a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常守穢惡女婦產生血污不淨以為資糧。",
        "from": "T85n2900_001:1432a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復逕五百萬世墮在䐗豚蜣蜋之中。",
        "from": "T85n2900_001:1432a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常食臭穢不淨之物。",
        "from": "T85n2900_001:1432a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受斯苦切累世懃苦。",
        "from": "T85n2900_001:1432a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數千萬劫無有出期。",
        "from": "T85n2900_001:1432a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難得解脫。",
        "from": "T85n2900_001:1432a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛不可言。",
        "from": "T85n2900_001:1432a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以手觸身體男女根等。",
        "from": "T85n2900_001:1432a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以此手觸沙門父母淨食。",
        "from": "T85n2900_001:1432a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不淨食著與沙門父母。",
        "from": "T85n2900_001:1432a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當致此殃。",
        "from": "T85n2900_001:1432a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切肉眼不知罪福。",
        "from": "T85n2900_001:1432a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今已後欲得佐助。",
        "from": "T85n2900_001:1432a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾僧作飯食者。",
        "from": "T85n2900_001:1432a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨身手捉眾僧食器。",
        "from": "T85n2900_001:1432a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨手澍米把麵。",
        "from": "T85n2900_001:1432a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以淨水作食。",
        "from": "T85n2900_001:1432a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得福無量。",
        "from": "T85n2900_001:1432a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今以後廣為一切普使聞知。",
        "from": "T85n2900_001:1432a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說修行。",
        "from": "T85n2900_001:1432a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目連白佛。",
        "from": "T85n2900_001:1432a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當流布。",
        "from": "T85n2900_001:1432a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢忘失。",
        "from": "T85n2900_001:1432a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心奉行。",
        "from": "T85n2900_001:1432a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說齋法清淨經",
        "from": "T85n2900_001:1432a24_100",
        "context_with_next_sentence": false
    }
]