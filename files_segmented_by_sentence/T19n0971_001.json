[
    {
        "source_sentence": "佛說佛頂尊勝陀羅尼經",
        "from": "T19n0971_001:0361c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐三藏沙門義淨奉　制譯",
        "from": "T19n0971_001:0361c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時薄伽梵。在室羅筏城逝多林",
        "from": "T19n0971_001:0361c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "給孤獨園。",
        "from": "T19n0971_001:0361c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大苾芻眾千二百五十人俱。",
        "from": "T19n0971_001:0361c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩萬二千人俱。",
        "from": "T19n0971_001:0361c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時三十三天善法堂會。",
        "from": "T19n0971_001:0361c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一天子名曰善住。",
        "from": "T19n0971_001:0361c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸大天并諸天女。",
        "from": "T19n0971_001:0361c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後圍遶受勝尊貴。",
        "from": "T19n0971_001:0361c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡娛遊戲種種天樂。",
        "from": "T19n0971_001:0361c28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共相娛樂受諸快樂。",
        "from": "T19n0971_001:0361c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善住天子。",
        "from": "T19n0971_001:0361c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其夜分聞有聲言。",
        "from": "T19n0971_001:0362a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住天子却後七日決欲命終。",
        "from": "T19n0971_001:0362a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此沒後生贍部洲。",
        "from": "T19n0971_001:0362a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便受七返傍生之身。",
        "from": "T19n0971_001:0362a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次受地獄苦從地獄出。",
        "from": "T19n0971_001:0362a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希得人身生貧賤家。",
        "from": "T19n0971_001:0362a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處於母胎即無兩目。",
        "from": "T19n0971_001:0362a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住天子聞此聲已。",
        "from": "T19n0971_001:0362a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身毛皆竪生大怖懼。",
        "from": "T19n0971_001:0362a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愁憂不樂惶怖無計。",
        "from": "T19n0971_001:0362a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便速疾往詣天帝釋所。",
        "from": "T19n0971_001:0362a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲號啼哭。",
        "from": "T19n0971_001:0362a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮天帝二足尊已白帝釋曰。",
        "from": "T19n0971_001:0362a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願天尊聽我所說。",
        "from": "T19n0971_001:0362a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我與天女共相圍遶。",
        "from": "T19n0971_001:0362a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受快樂時聞有聲言。",
        "from": "T19n0971_001:0362a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住天子却後七日命將欲終。",
        "from": "T19n0971_001:0362a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生贍部洲。",
        "from": "T19n0971_001:0362a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便受七返傍生之身。",
        "from": "T19n0971_001:0362a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次受地獄苦從地獄出。",
        "from": "T19n0971_001:0362a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希得人身生貧賤家。",
        "from": "T19n0971_001:0362a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在母胎中即無兩目。",
        "from": "T19n0971_001:0362a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我聞斯語惶怖無計。",
        "from": "T19n0971_001:0362a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何令我得免斯苦。",
        "from": "T19n0971_001:0362a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天帝釋聞善住天子語已。",
        "from": "T19n0971_001:0362a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚大驚愕諦想思惟。",
        "from": "T19n0971_001:0362a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之善住受何七返惡趣之身。",
        "from": "T19n0971_001:0362a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾靜住注想諦觀。",
        "from": "T19n0971_001:0362a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便見善住當受七返惡趣之身。",
        "from": "T19n0971_001:0362a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂䐗狗野干。",
        "from": "T19n0971_001:0362a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獼猴蟒蛇烏鷲等身。",
        "from": "T19n0971_001:0362a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食諸穢惡不淨之物。",
        "from": "T19n0971_001:0362a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋觀見善住天子。",
        "from": "T19n0971_001:0362a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮七返惡趣身已。",
        "from": "T19n0971_001:0362a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極軫慈念愁憂苦惱痛貫身心。",
        "from": "T19n0971_001:0362a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦思何計何所歸依。",
        "from": "T19n0971_001:0362a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰能覆護得免斯苦。",
        "from": "T19n0971_001:0362a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是念唯有如來應正等覺大慈悲父。",
        "from": "T19n0971_001:0362a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其善住免斯苦耶爾時帝釋作是念已。",
        "from": "T19n0971_001:0362a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於初夜分以種種華天妙衣服以自莊嚴。",
        "from": "T19n0971_001:0362a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執持花香往逝多林。",
        "from": "T19n0971_001:0362a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣世尊所恭敬供養。",
        "from": "T19n0971_001:0362a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮雙足遶七匝已。",
        "from": "T19n0971_001:0362a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長跪合掌而白佛言。",
        "from": "T19n0971_001:0362a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住天子聞有聲言。",
        "from": "T19n0971_001:0362a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却後七日命終而受七返傍生惡趣之身。",
        "from": "T19n0971_001:0362a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此語已極懷憂苦痛貫於心。",
        "from": "T19n0971_001:0362a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊大慈哀慜利益。",
        "from": "T19n0971_001:0362a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何令得免斯苦耶。",
        "from": "T19n0971_001:0362a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊聞此語已。",
        "from": "T19n0971_001:0362a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便微笑於其頂上。",
        "from": "T19n0971_001:0362a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放種種光遍照三千大千世界還至佛所。",
        "from": "T19n0971_001:0362b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛世尊說過去事光從背入。",
        "from": "T19n0971_001:0362b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說未來事光從胸入。",
        "from": "T19n0971_001:0362b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說地獄事光從足下入。",
        "from": "T19n0971_001:0362b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說傍生事光從足跟入。",
        "from": "T19n0971_001:0362b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說餓鬼事光從足指入。",
        "from": "T19n0971_001:0362b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說人事光從膝入。",
        "from": "T19n0971_001:0362b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說力輪王事光從左手掌入。",
        "from": "T19n0971_001:0362b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說轉輪王事光從右手掌入。",
        "from": "T19n0971_001:0362b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說天事光從臍入。",
        "from": "T19n0971_001:0362b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說聲聞事光從口入。",
        "from": "T19n0971_001:0362b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說獨覺事光從眉間入。",
        "from": "T19n0971_001:0362b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說阿耨多羅三藐三菩提事光從頂入。",
        "from": "T19n0971_001:0362b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時光明還至佛所。",
        "from": "T19n0971_001:0362b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶佛三匝從佛口入。",
        "from": "T19n0971_001:0362b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告帝釋曰。",
        "from": "T19n0971_001:0362b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝有陀羅尼。",
        "from": "T19n0971_001:0362b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為如來佛頂尊勝。",
        "from": "T19n0971_001:0362b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能淨一切惡趣生死苦惱。",
        "from": "T19n0971_001:0362b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又能淨除一切地獄琰摩王界傍生之苦。",
        "from": "T19n0971_001:0362b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又破一切地獄之業迴趣善道。",
        "from": "T19n0971_001:0362b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此佛頂尊勝陀羅尼。",
        "from": "T19n0971_001:0362b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可思議有大神力。",
        "from": "T19n0971_001:0362b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人一經於耳。",
        "from": "T19n0971_001:0362b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先世所造一切惡業悉皆消滅。",
        "from": "T19n0971_001:0362b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得清淨勝妙之身。",
        "from": "T19n0971_001:0362b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所生處憶持不忘。",
        "from": "T19n0971_001:0362b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一佛土至一佛土。",
        "from": "T19n0971_001:0362b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一天界至一天界。",
        "from": "T19n0971_001:0362b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至遍歷三十三天。",
        "from": "T19n0971_001:0362b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處憶持不忘。",
        "from": "T19n0971_001:0362b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次天帝若人欲終。",
        "from": "T19n0971_001:0362b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾憶念此陀羅尼還得增壽。",
        "from": "T19n0971_001:0362b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意淨亦無苦痛。",
        "from": "T19n0971_001:0362b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其福利悉蒙安隱。",
        "from": "T19n0971_001:0362b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦令一切如來之所瞻視。",
        "from": "T19n0971_001:0362b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天神常為侍衛。",
        "from": "T19n0971_001:0362b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人所敬重惡障消除。",
        "from": "T19n0971_001:0362b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩同為覆護。",
        "from": "T19n0971_001:0362b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有男子女人。",
        "from": "T19n0971_001:0362b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾讀誦持此陀羅尼者。",
        "from": "T19n0971_001:0362b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此人所有三惡道苦。",
        "from": "T19n0971_001:0362b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破壞消滅無有遺餘。",
        "from": "T19n0971_001:0362b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛淨土及諸天宮。",
        "from": "T19n0971_001:0362b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩甚深行願。",
        "from": "T19n0971_001:0362b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意遊入悉無障礙。",
        "from": "T19n0971_001:0362b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時帝釋一心樂聞。",
        "from": "T19n0971_001:0362b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時薄伽梵觀察帝釋心之所念。",
        "from": "T19n0971_001:0362b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大慈悲心說是陀羅尼法。",
        "from": "T19n0971_001:0362b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T19n0971_001:0362b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南謨薄伽伐帝　咥哩盧枳也　鉢喇底毘失瑟吒引也　勃陀引也薄伽伐帝　怛咥他唵毘輸馱唐左也　颯麼三曼多　阿婆婆引娑颯撥囉　拏揭底㖸喝娜　瑣婆引婆毘戍商聿下同睇阿毘詵者覩漫引　蘇揭多跋囉跋者那　阿蜜栗多鞞師計　痾引下同喝囉痾喝囉　痾愈珊陀引喇儞　輸馱也輸馱也　伽伽那毘戍睇　烏瑟膩沙　毘逝也戍睇　索訶薩囉曷喇濕弭　珊珠地帝　薩婆上怛他揭多　阿地瑟侘引娜　阿地瑟恥䫂丁可反下同沒姪囇　跋折囉引迦也　僧喝旦那戍睇　薩婆痾伐刺拏毘戍睇　鉢喇底儞跋戴也　阿愈戍睇　三麼耶阿地瑟恥帝　末儞末儞麼末儞　呾闥多步多孤㨖　鉢唎戍睇　鼻窣怖吒勃地戍睇　逝也逝也　鼻逝也鼻逝也　三末囉三末囉　薩婆勃陀　阿地瑟恥多戍睇　跋折囇跋折囉引揭鞞引　跋折藍婆跋覩　麼麼阿目羯寫自稱名我某甲薩婆薩埵難引者迦也毘戍睇　薩婆揭底鉢唎戍睇　薩婆怛他揭哆　三摩戍和娑阿地瑟恥帝　勃陀勃陀停也反　菩馱也菩馱也　三曼䫂鉢唎戍睇　薩婆怛他揭䫂　阿地瑟侘引娜阿地瑟恥帝莎訶此呪比多翻譯傳誦者眾然於聲韻字體未能盡善故更重勘梵本一一詳定爾時世尊說此陀羅尼已。",
        "from": "T19n0971_001:0362c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告帝釋曰此陀羅尼印名淨除一切惡趣佛頂尊勝陀羅尼法。",
        "from": "T19n0971_001:0362c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能除滅一切罪業等障。",
        "from": "T19n0971_001:0362c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能淨一切穢惡道苦。",
        "from": "T19n0971_001:0362c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此陀羅尼。",
        "from": "T19n0971_001:0362c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十八弶伽沙俱胝百千諸佛。",
        "from": "T19n0971_001:0362c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同共宣說隨喜受持。",
        "from": "T19n0971_001:0362c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大日如來智印印之。",
        "from": "T19n0971_001:0362c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為破一切有情三惡趣網。",
        "from": "T19n0971_001:0362c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切地獄傍生琰摩王界之所有情而得解脫。",
        "from": "T19n0971_001:0363a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾苦逼迫墮生死海有情得解脫故。",
        "from": "T19n0971_001:0363a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦令短命薄福現無救護眾生。",
        "from": "T19n0971_001:0363a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂造雜染惡業有情得饒益故。",
        "from": "T19n0971_001:0363a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼於贍部洲住持力故。",
        "from": "T19n0971_001:0363a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又令邪見不信善惡三惡趣中。",
        "from": "T19n0971_001:0363a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種流轉生死苦惱。",
        "from": "T19n0971_001:0363a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薄福有情迷失正路。",
        "from": "T19n0971_001:0363a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等類無不蒙益。",
        "from": "T19n0971_001:0363a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉令解脫眾苦重擔。",
        "from": "T19n0971_001:0363a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告天帝我今宣說此陀羅尼付囑於汝。",
        "from": "T19n0971_001:0363a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當授與善住天子。",
        "from": "T19n0971_001:0363a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其受持讀誦思惟。",
        "from": "T19n0971_001:0363a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛敬供養憶持莫忘。",
        "from": "T19n0971_001:0363a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦令贍部洲中一切有情。",
        "from": "T19n0971_001:0363a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣宣流布此陀羅尼利益無量。",
        "from": "T19n0971_001:0363a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為一切諸天子等。",
        "from": "T19n0971_001:0363a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此大陀羅尼印付囑於汝。",
        "from": "T19n0971_001:0363a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝汝當正意憶持。",
        "from": "T19n0971_001:0363a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤加守護勿令忘失。",
        "from": "T19n0971_001:0363a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次天帝。",
        "from": "T19n0971_001:0363a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人須臾得聞此陀羅尼。",
        "from": "T19n0971_001:0363a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千劫已來積集重障惡業之罪。",
        "from": "T19n0971_001:0363a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應受種種生死流轉。",
        "from": "T19n0971_001:0363a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄餓鬼傍生琰摩王界。",
        "from": "T19n0971_001:0363a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿蘇羅身藥叉鬼神。",
        "from": "T19n0971_001:0363a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布單那羯吒布單那阿波娑摩囉。",
        "from": "T19n0971_001:0363a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蚊虻龜狗蟒蛇等身。",
        "from": "T19n0971_001:0363a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸鳥及諸猛獸。",
        "from": "T19n0971_001:0363a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情乃至蟻子之身。",
        "from": "T19n0971_001:0363a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不重受便得轉生。",
        "from": "T19n0971_001:0363a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛世尊一生補處菩薩同會一處。",
        "from": "T19n0971_001:0363a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或得大姓婆羅門家生。",
        "from": "T19n0971_001:0363a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生剎帝利種及以豪貴最勝家生。",
        "from": "T19n0971_001:0363a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此人身等。",
        "from": "T19n0971_001:0363a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上勝處生者。",
        "from": "T19n0971_001:0363a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由聞此陀羅尼故。",
        "from": "T19n0971_001:0363a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所生處皆得清淨勝妙之身。",
        "from": "T19n0971_001:0363a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝如是果報乃至菩提最勝之處。",
        "from": "T19n0971_001:0363a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由讚歎此陀羅尼殊勝功德。",
        "from": "T19n0971_001:0363a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此陀羅尼名為吉祥。",
        "from": "T19n0971_001:0363a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故能除一切三惡道故。",
        "from": "T19n0971_001:0363a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此佛頂尊勝陀羅尼。",
        "from": "T19n0971_001:0363a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如日藏摩尼之寶。",
        "from": "T19n0971_001:0363a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨無瑕翳猶若虛空。",
        "from": "T19n0971_001:0363a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光焰照徹無不周遍。",
        "from": "T19n0971_001:0363a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸有情淨心持此陀羅尼者亦復如是。",
        "from": "T19n0971_001:0363b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如善好金明淨柔軟令人喜見。",
        "from": "T19n0971_001:0363b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為穢惡之所染著。",
        "from": "T19n0971_001:0363b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如蓮華飛塵不染。",
        "from": "T19n0971_001:0363b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝持此陀羅尼者亦復如是。",
        "from": "T19n0971_001:0363b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘此淨業必生善趣。",
        "from": "T19n0971_001:0363b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此陀羅尼隨所方處。",
        "from": "T19n0971_001:0363b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能如是書寫受持。",
        "from": "T19n0971_001:0363b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽聞讚誦恭敬供養者。",
        "from": "T19n0971_001:0363b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡道皆得清淨。",
        "from": "T19n0971_001:0363b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸地獄苦速能消滅。",
        "from": "T19n0971_001:0363b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝若有男子女人。",
        "from": "T19n0971_001:0363b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫此陀羅尼安高幢上。",
        "from": "T19n0971_001:0363b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或安高山或置樓臺。",
        "from": "T19n0971_001:0363b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至安置窣堵波中。",
        "from": "T19n0971_001:0363b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝若有苾芻苾芻尼鄔波索迦鄔波斯迦族姓男女。",
        "from": "T19n0971_001:0363b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於前幢等或時遙見。",
        "from": "T19n0971_001:0363b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或與相近其影映身。",
        "from": "T19n0971_001:0363b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復風吹陀羅尼等。",
        "from": "T19n0971_001:0363b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幢上輕塵落在身者。",
        "from": "T19n0971_001:0363b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝彼諸眾生所有罪業。",
        "from": "T19n0971_001:0363b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應墮惡趣地獄餓鬼傍生。",
        "from": "T19n0971_001:0363b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "琰摩王界阿蘇羅身。",
        "from": "T19n0971_001:0363b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾惡之苦皆悉不受。",
        "from": "T19n0971_001:0363b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不為罪垢染污。",
        "from": "T19n0971_001:0363b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此等有情一切諸佛之所授記。",
        "from": "T19n0971_001:0363b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得不退轉於阿耨多羅三藐三菩提。",
        "from": "T19n0971_001:0363b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝何況更以種種華鬘塗香末香。",
        "from": "T19n0971_001:0363b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幢幡花蓋衣服瓔珞。",
        "from": "T19n0971_001:0363b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作諸妓樂種種莊嚴。",
        "from": "T19n0971_001:0363b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四衢道造窣堵波。",
        "from": "T19n0971_001:0363b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置陀羅尼合掌恭敬。",
        "from": "T19n0971_001:0363b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋遶周行歸命禮拜。",
        "from": "T19n0971_001:0363b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝彼人能如是供養者。",
        "from": "T19n0971_001:0363b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰摩訶薩埵。",
        "from": "T19n0971_001:0363b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真是佛子持法棟梁。",
        "from": "T19n0971_001:0363b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又是如來全身舍利窣堵波塔。",
        "from": "T19n0971_001:0363b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時琰摩法王於夜初分來詣佛所。",
        "from": "T19n0971_001:0363b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種妙衣種種華香。",
        "from": "T19n0971_001:0363b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香末香栴檀沈水。",
        "from": "T19n0971_001:0363b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬供養遶佛七匝。",
        "from": "T19n0971_001:0363b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮雙足已而作是言。",
        "from": "T19n0971_001:0363b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我聞如來演說大力陀羅尼法。",
        "from": "T19n0971_001:0363b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚持功德不可思議。",
        "from": "T19n0971_001:0363b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊大慈憐慜利益罪苦眾生。",
        "from": "T19n0971_001:0363b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我常隨逐守護。",
        "from": "T19n0971_001:0363b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令持者墮於地獄。",
        "from": "T19n0971_001:0363b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由彼隨順如來言教而護念之。",
        "from": "T19n0971_001:0363b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時護世四大天王。",
        "from": "T19n0971_001:0363b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶佛三匝在一面立。",
        "from": "T19n0971_001:0363b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T19n0971_001:0363c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來重為我等。",
        "from": "T19n0971_001:0363c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣說陀羅尼法。",
        "from": "T19n0971_001:0363c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告四大天王曰。",
        "from": "T19n0971_001:0363c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等諦聽我當為汝。",
        "from": "T19n0971_001:0363c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演說持此陀羅尼法。",
        "from": "T19n0971_001:0363c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為短命諸有情說。",
        "from": "T19n0971_001:0363c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲受持當淨洗浴著新淨衣。",
        "from": "T19n0971_001:0363c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從白月一日乃至圓滿十五日時。",
        "from": "T19n0971_001:0363c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋戒一心誦陀羅尼滿其千遍。",
        "from": "T19n0971_001:0363c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令短命者命還增續永離病苦。",
        "from": "T19n0971_001:0363c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切業障悉能消滅。",
        "from": "T19n0971_001:0363c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切地獄之苦一切鳥獸乃至有命之類。",
        "from": "T19n0971_001:0363c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此陀羅尼聲一經於耳。",
        "from": "T19n0971_001:0363c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡此身已更不復受一切眾苦。",
        "from": "T19n0971_001:0363c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若復有人忽遇惡病眾苦逼迫。",
        "from": "T19n0971_001:0363c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此陀羅尼者即得永離一切惡病眾苦消滅。",
        "from": "T19n0971_001:0363c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若應墮在惡道亦得解脫。",
        "from": "T19n0971_001:0363c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得往生妙喜世界。",
        "from": "T19n0971_001:0363c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡此身已後更不受胞胎之身。",
        "from": "T19n0971_001:0363c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所在之處蓮花化生。",
        "from": "T19n0971_001:0363c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其所生常得宿命憶持不忘。",
        "from": "T19n0971_001:0363c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若復有人。",
        "from": "T19n0971_001:0363c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先造一切極重業已遂即命終。",
        "from": "T19n0971_001:0363c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此惡業應墮地獄。",
        "from": "T19n0971_001:0363c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或墮傍生琰摩王界餓鬼之趣。",
        "from": "T19n0971_001:0363c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至墮在捺洛迦中。",
        "from": "T19n0971_001:0363c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生水中或作禽獸種種之身。",
        "from": "T19n0971_001:0363c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取其亡者隨身分骨。",
        "from": "T19n0971_001:0363c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土一把以陀羅尼呪之二十一遍。",
        "from": "T19n0971_001:0363c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散於骨上。",
        "from": "T19n0971_001:0363c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡者生天。",
        "from": "T19n0971_001:0363c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若人常能日日誦此陀羅尼滿二十一遍。",
        "from": "T19n0971_001:0363c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應消一切世間殊勝供養。",
        "from": "T19n0971_001:0363c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身往生極樂世界。",
        "from": "T19n0971_001:0363c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常誦念復增壽命受諸快樂。",
        "from": "T19n0971_001:0363c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨此身已即得往生種種微妙諸佛剎土。",
        "from": "T19n0971_001:0363c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與諸佛俱會一處。",
        "from": "T19n0971_001:0363c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來常為演說微妙之法。",
        "from": "T19n0971_001:0363c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛授菩提記。",
        "from": "T19n0971_001:0363c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身光照曜一切剎土。",
        "from": "T19n0971_001:0363c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至獲得無上涅槃。",
        "from": "T19n0971_001:0363c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次若欲誦此陀羅尼法。",
        "from": "T19n0971_001:0363c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其佛前先取淨土作壇。",
        "from": "T19n0971_001:0363c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其大小正方而作。",
        "from": "T19n0971_001:0363c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種草花散於壇上。",
        "from": "T19n0971_001:0363c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒眾名香雙膝著地或時蹲踞。",
        "from": "T19n0971_001:0363c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心常念佛作慕陀羅尼印。",
        "from": "T19n0971_001:0364a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先屈頭指以大拇指押。",
        "from": "T19n0971_001:0364a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後當心合掌。",
        "from": "T19n0971_001:0364a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼滿一百八遍。",
        "from": "T19n0971_001:0364a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其壇中猶如雲王雨種種花。",
        "from": "T19n0971_001:0364a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能遍供養八十八俱胝弶伽沙數那庾多百千諸佛。",
        "from": "T19n0971_001:0364a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼佛世尊咸共讚言。",
        "from": "T19n0971_001:0364a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉此為希有真是佛子。",
        "from": "T19n0971_001:0364a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得無障礙智三昧及菩提心莊嚴三昧。",
        "from": "T19n0971_001:0364a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持此陀羅尼者應如是作。",
        "from": "T19n0971_001:0364a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言天帝我以善巧方便。",
        "from": "T19n0971_001:0364a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有一切眾生應墮地獄即令解脫。",
        "from": "T19n0971_001:0364a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡道亦得清淨消滅無餘。",
        "from": "T19n0971_001:0364a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復令持者增益壽命。",
        "from": "T19n0971_001:0364a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝汝今將我陀羅尼法。",
        "from": "T19n0971_001:0364a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授與善住天子。",
        "from": "T19n0971_001:0364a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即令持誦滿七日已。",
        "from": "T19n0971_001:0364a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝與善住俱來見我。",
        "from": "T19n0971_001:0364a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天帝釋於世尊前。",
        "from": "T19n0971_001:0364a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親受陀羅尼法。",
        "from": "T19n0971_001:0364a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉持憶念還於本宮。",
        "from": "T19n0971_001:0364a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授與善住天子。",
        "from": "T19n0971_001:0364a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善住天子受得此陀羅尼法已。",
        "from": "T19n0971_001:0364a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿六日六夜依法受持一切願滿。",
        "from": "T19n0971_001:0364a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應受彼一切惡趣之苦即時解脫。",
        "from": "T19n0971_001:0364a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住菩提分增益壽命。",
        "from": "T19n0971_001:0364a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量福業應時雲集。",
        "from": "T19n0971_001:0364a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶悅無量高聲唱言。",
        "from": "T19n0971_001:0364a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希有如來說斯妙法。",
        "from": "T19n0971_001:0364a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希有明驗甚大難量。",
        "from": "T19n0971_001:0364a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慈世尊能為我等及諸有情說此神呪。",
        "from": "T19n0971_001:0364a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我解脫惡趣之苦。",
        "from": "T19n0971_001:0364a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天帝釋至七日已。",
        "from": "T19n0971_001:0364a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與善住天子及諸天眾。",
        "from": "T19n0971_001:0364a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴飾花鬘。",
        "from": "T19n0971_001:0364a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齎以妙香寶幢幡蓋天衣瓔珞微妙莊嚴。",
        "from": "T19n0971_001:0364a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來詣佛所作供養已。",
        "from": "T19n0971_001:0364a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以天妙衣及諸瓔珞。",
        "from": "T19n0971_001:0364a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉上世尊遶百千匝。",
        "from": "T19n0971_001:0364a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "踊躍歡喜在一面坐。",
        "from": "T19n0971_001:0364a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞻仰尊容目未曾捨。",
        "from": "T19n0971_001:0364a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊舒金色臂。",
        "from": "T19n0971_001:0364a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便以百福莊嚴眾相具足無畏右手。",
        "from": "T19n0971_001:0364a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩善住天子頂。",
        "from": "T19n0971_001:0364a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為說法授菩提記。",
        "from": "T19n0971_001:0364a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告善住天子曰。",
        "from": "T19n0971_001:0364a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼印名為淨除一切惡趣佛頂尊勝陀羅尼。",
        "from": "T19n0971_001:0364a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝應授持。",
        "from": "T19n0971_001:0364a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善住天子及天帝釋。",
        "from": "T19n0971_001:0364b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來天眾一切大會。",
        "from": "T19n0971_001:0364b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛說已皆大歡喜信受奉行。",
        "from": "T19n0971_001:0364b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說佛頂尊勝陀羅尼經",
        "from": "T19n0971_001:0364b03_100",
        "context_with_next_sentence": false
    }
]