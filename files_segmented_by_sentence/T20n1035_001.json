[
    {
        "source_sentence": "千轉陀羅尼觀世音菩薩呪",
        "from": "T20n1035_001:0017b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐總持寺沙門智通譯",
        "from": "T20n1035_001:0017b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜謨曷囉上跢娜怛囉耶余何反夜弋可反一娜麼",
        "from": "T20n1035_001:0017b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫我阿唎耶跋盧枳羝鑠上筏囉夜二菩提徒儞反薩跢婆夜三莫訶薩跢婆夜四莫訶迦嚕嬭奴綺反迦夜五跢姪他六闍上曳闍曳七闍上夜婆醯上儞八闍上榆跢唎上九迦上羅迦上羅十麼羅麼羅十一者羅者羅上十二綺拏上綺拏十三薩囉上皤符可反羯囉上摩跋囉上拏儞迷十四薄伽跋底都儞反娑上訶薩囉平薄羯羝十五薩囉上皤菩上陀跋盧枳羝十六者芻上眼十七輸上嚕怛囉上耳十八揭囉上拏上鼻十九是訶上皤舌二十迦夜身二十一末弩心二十二毘上輸達儞二十三素上囉上素上囉上二十四鉢囉上素囉鉢囉上素囉上二十五薩囉上皤菩上陀阿上提徒儞反瑟絺上羝娑婆訶二十六達囉上麼陀覩揭囉上鞞娑上婆訶二十七阿上婆皤二十八娑上皤婆皤二十九達囉上摩皤三十蒱馱上尼奴移反曳三十一娑婆訶三十二千轉印與觀世音心印同唯足不同頭指以去四指反叉。",
        "from": "T20n1035_001:0017c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向內相捺。",
        "from": "T20n1035_001:0017c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左大指屈入頭指中。",
        "from": "T20n1035_001:0017c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右大指舒直。",
        "from": "T20n1035_001:0017c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向內勿曲。",
        "from": "T20n1035_001:0017c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩腕相合。",
        "from": "T20n1035_001:0017c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩脚作丁字形。",
        "from": "T20n1035_001:0017c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃右脚直立左膝曲在外。",
        "from": "T20n1035_001:0017c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弩跨身屈向左邊。",
        "from": "T20n1035_001:0017c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以心印當右乳前勿著乳。",
        "from": "T20n1035_001:0017c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面作笑顏頭向右手印與觀世音心印同唯身脚法用別每月十五日洗浴於淨室。",
        "from": "T20n1035_001:0017c19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手作心印誦呪。",
        "from": "T20n1035_001:0017c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅四重五逆此印是阿地多崛多師譯出。",
        "from": "T20n1035_001:0017c20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千轉云。",
        "from": "T20n1035_001:0017c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪已惡業消滅。",
        "from": "T20n1035_001:0017c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至七遍五逆罪滅。",
        "from": "T20n1035_001:0017c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若滿十遍已罪無不滅。",
        "from": "T20n1035_001:0017c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十萬遍面見觀音種種莊嚴者。",
        "from": "T20n1035_001:0017c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日之中初作法時。",
        "from": "T20n1035_001:0017c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟得食乳糜蘇酪白餅粳米飯。",
        "from": "T20n1035_001:0017c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得食鹽醬菜。",
        "from": "T20n1035_001:0017c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最後一日勿食。",
        "from": "T20n1035_001:0018a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五日夜空腹。",
        "from": "T20n1035_001:0018a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛前馺馺誦呪無定數。",
        "from": "T20n1035_001:0018a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見像動搖。",
        "from": "T20n1035_001:0018a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出聲唱言善哉。",
        "from": "T20n1035_001:0018a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放光明曜。",
        "from": "T20n1035_001:0018a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以真珠寶物安呪師頂上。",
        "from": "T20n1035_001:0018a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即知成驗。",
        "from": "T20n1035_001:0018a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面見觀音已。",
        "from": "T20n1035_001:0018a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得滿一切善願。",
        "from": "T20n1035_001:0018a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於睡眠中夢見觀音種種莊嚴者。",
        "from": "T20n1035_001:0018a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切善事成就。",
        "from": "T20n1035_001:0018a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡業消滅。",
        "from": "T20n1035_001:0018a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直轉讀者亦得滅罪。",
        "from": "T20n1035_001:0018a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲東西行時。",
        "from": "T20n1035_001:0018a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先呪手七遍以摩拭面。",
        "from": "T20n1035_001:0018a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所至之處無諸災橫若能清淨如法常誦不廢。",
        "from": "T20n1035_001:0018a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得第一地。",
        "from": "T20n1035_001:0018a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有女人能誦持者後成男子。",
        "from": "T20n1035_001:0018a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不重受如是女形。",
        "from": "T20n1035_001:0018a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作壇安置供養備訖。",
        "from": "T20n1035_001:0018a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然始誦呪其壇四面各長十六肘。",
        "from": "T20n1035_001:0018a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四重作規。",
        "from": "T20n1035_001:0018a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院相皆外白色內四色。",
        "from": "T20n1035_001:0018a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各一重如似壁勢。",
        "from": "T20n1035_001:0018a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是八重也。",
        "from": "T20n1035_001:0018a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合五方色四面開門。",
        "from": "T20n1035_001:0018a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東西南北相當。",
        "from": "T20n1035_001:0018a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正中一重不須開門。",
        "from": "T20n1035_001:0018a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大瓦罐八枚瓮子四枚。",
        "from": "T20n1035_001:0018a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿盛水插柏及樹枝。",
        "from": "T20n1035_001:0018a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安水罐瓮中。",
        "from": "T20n1035_001:0018a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作白餅粳米飯乳酪蘇蜜香果子等供養。",
        "from": "T20n1035_001:0018a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然十六枝燈。",
        "from": "T20n1035_001:0018a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四門外各插十六隻未經用箭。",
        "from": "T20n1035_001:0018a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掛五綵線於箭上。",
        "from": "T20n1035_001:0018a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取佉陀羅木紫檀木是四枝。",
        "from": "T20n1035_001:0018a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二長五指二長六指。",
        "from": "T20n1035_001:0018a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釘壇四角。",
        "from": "T20n1035_001:0018a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散種種時非時花於壇上。",
        "from": "T20n1035_001:0018a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取頗伽木拘無子少者是一千八百枚。",
        "from": "T20n1035_001:0018a19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各長一尺。",
        "from": "T20n1035_001:0018a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一瓦鉢若銅鉢。",
        "from": "T20n1035_001:0018a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和蘇乳塗此木枝。",
        "from": "T20n1035_001:0018a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪一枝一遍即擲火中。",
        "from": "T20n1035_001:0018a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無佉陀羅木時赤棗木代亦得須畫一白色觀音聖者像。",
        "from": "T20n1035_001:0018a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力大小作。",
        "from": "T20n1035_001:0018a22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又先翻法云。",
        "from": "T20n1035_001:0018a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千劫聚集業障。",
        "from": "T20n1035_001:0018a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時誦念悉皆滅盡。",
        "from": "T20n1035_001:0018a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得千佛聚集善根。",
        "from": "T20n1035_001:0018a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得背千劫流轉生老病死邊際。",
        "from": "T20n1035_001:0018a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨此身已即見千轉輪聖王。",
        "from": "T20n1035_001:0018a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒持十善。",
        "from": "T20n1035_001:0018a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲生諸佛淨土者。",
        "from": "T20n1035_001:0018a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜各三時誦二十一遍。",
        "from": "T20n1035_001:0018a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿三七日如其所欲。",
        "from": "T20n1035_001:0018a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於夢中或見佛金色形像及菩薩形像此是先相即知當生淨土。",
        "from": "T20n1035_001:0018a28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上件呪及功能。",
        "from": "T20n1035_001:0018a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並是通師總持寺翻梵本出。",
        "from": "T20n1035_001:0018a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其印法者崛多師譯出。",
        "from": "T20n1035_001:0018b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別譯本云。",
        "from": "T20n1035_001:0018b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持法。",
        "from": "T20n1035_001:0018b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取突婆香并苗五斤。",
        "from": "T20n1035_001:0018b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楮木一千箇長一尺。",
        "from": "T20n1035_001:0018b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并蘇總呪一千遍。",
        "from": "T20n1035_001:0018b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨欲燒之。",
        "from": "T20n1035_001:0018b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以蘇塗木莖及香上。",
        "from": "T20n1035_001:0018b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各呪一遍燒之。",
        "from": "T20n1035_001:0018b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豫五月六月取牛糞陰乾。",
        "from": "T20n1035_001:0018b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "突婆香水和作泥作場身。",
        "from": "T20n1035_001:0018b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二肘圓作場。",
        "from": "T20n1035_001:0018b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "場上安種種花香。",
        "from": "T20n1035_001:0018b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冬月無花刻花安之。",
        "from": "T20n1035_001:0018b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然薰陸香。",
        "from": "T20n1035_001:0018b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪師面向東。",
        "from": "T20n1035_001:0018b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐誦滿一千遍法成。",
        "from": "T20n1035_001:0018b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未呪之時用此呪水二十一遍。",
        "from": "T20n1035_001:0018b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或七遍服之。",
        "from": "T20n1035_001:0018b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪水解污淨室道場佛堂洗身呪柳枝打病呪水治病並得。",
        "from": "T20n1035_001:0018b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各二十一遍。",
        "from": "T20n1035_001:0018b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能一生日別三時時別誦二十一遍。",
        "from": "T20n1035_001:0018b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅罪不可思議通一切用。",
        "from": "T20n1035_001:0018b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千轉陀羅尼觀世音菩薩呪",
        "from": "T20n1035_001:0018b13_100",
        "context_with_next_sentence": false
    }
]