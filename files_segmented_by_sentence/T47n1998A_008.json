{
    "T47n1998A_008:0841b06_0": "大慧普覺禪師住福州洋嶼菴語",
    "T47n1998A_008:0841b07_0": "錄卷第八",
    "T47n1998A_008:0841b09_0": "徑山能仁禪院住持嗣法",
    "T47n1998A_008:0841b10_0": "慧日禪師臣蘊聞　上進",
    "T47n1998A_008:0841b11_0": "入菴示眾。",
    "T47n1998A_008:0841b11_1": "恁麼恁麼。",
    "T47n1998A_008:0841b11_2": "理隨事變。",
    "T47n1998A_008:0841b11_3": "不恁麼不恁麼。",
    "T47n1998A_008:0841b12_4": "事得理融。",
    "T47n1998A_008:0841b12_5": "恁麼中不恁麼。",
    "T47n1998A_008:0841b12_6": "寬廓非外。",
    "T47n1998A_008:0841b12_7": "不恁麼中却恁麼。",
    "T47n1998A_008:0841b13_8": "寂寥非內。",
    "T47n1998A_008:0841b13_9": "寂寥非內也。",
    "T47n1998A_008:0841b13_10": "觀法界於一塵之中。",
    "T47n1998A_008:0841b14_11": "寬廓非外也。",
    "T47n1998A_008:0841b14_12": "見一塵遍法界之內。",
    "T47n1998A_008:0841b15_13": "無始無終無前無後。",
    "T47n1998A_008:0841b15_14": "無古無今一時清淨。",
    "T47n1998A_008:0841b16_0": "便恁麼去。",
    "T47n1998A_008:0841b16_1": "止宿草菴且在門外。",
    "T47n1998A_008:0841b16_2": "何故。",
    "T47n1998A_008:0841b16_3": "猶是教乘極則。",
    "T47n1998A_008:0841b17_4": "未是衲僧本分事。",
    "T47n1998A_008:0841b17_5": "直須恁麼中不恁麼。",
    "T47n1998A_008:0841b18_6": "不恁麼中却恁麼。",
    "T47n1998A_008:0841b18_7": "直下便揑到這裏直得三世諸佛諸代祖師天下老和尚無摸[打丁+索]處。",
    "T47n1998A_008:0841b20_0": "更說甚麼內。",
    "T47n1998A_008:0841b20_1": "說甚麼外。",
    "T47n1998A_008:0841b20_2": "說甚麼理。",
    "T47n1998A_008:0841b20_3": "說甚麼事。",
    "T47n1998A_008:0841b21_0": "說甚麼法界。",
    "T47n1998A_008:0841b21_1": "說甚麼一塵。",
    "T47n1998A_008:0841b21_2": "以拂子擊禪床一下云。",
    "T47n1998A_008:0841b22_3": "若向這裏證得去。",
    "T47n1998A_008:0841b22_4": "在內不寂在外不常。",
    "T47n1998A_008:0841b23_0": "在無不減在有不增。",
    "T47n1998A_008:0841b23_1": "不住兩頭不居中位。",
    "T47n1998A_008:0841b23_2": "乾峯舉一不得舉二。",
    "T47n1998A_008:0841b24_3": "放過一著落在第二。",
    "T47n1998A_008:0841b24_4": "睦州盞子落地楪子成七片。",
    "T47n1998A_008:0841b25_5": "有甚麼過。",
    "T47n1998A_008:0841b25_6": "良久喝一喝云。",
    "T47n1998A_008:0841b26_7": "任大也須從地起。",
    "T47n1998A_008:0841b26_8": "更高爭奈有天何。",
    "T47n1998A_008:0841b26_9": "復舉。",
    "T47n1998A_008:0841b27_10": "僧問巖頭。",
    "T47n1998A_008:0841b27_11": "三界競起時如何。",
    "T47n1998A_008:0841b27_12": "頭云。",
    "T47n1998A_008:0841b27_13": "坐却著。",
    "T47n1998A_008:0841b28_14": "僧云。",
    "T47n1998A_008:0841b28_15": "未審師意如何。",
    "T47n1998A_008:0841b28_16": "頭云。",
    "T47n1998A_008:0841b28_17": "移取廬山來。",
    "T47n1998A_008:0841b29_0": "即向汝道。",
    "T47n1998A_008:0841b29_1": "師云。",
    "T47n1998A_008:0841b29_2": "巖頭古佛向萬仞崖頭垂手。",
    "T47n1998A_008:0841c01_0": "鑊湯鑪炭裏橫身。",
    "T47n1998A_008:0841c01_1": "蓋為慈悲之故有落草之談。",
    "T47n1998A_008:0841c02_2": "今日若有人問雲門。",
    "T47n1998A_008:0841c02_3": "三界競起時如何。",
    "T47n1998A_008:0841c02_4": "只向他道。",
    "T47n1998A_008:0841c03_5": "快便難逢。",
    "T47n1998A_008:0841c03_6": "未審師意如何。",
    "T47n1998A_008:0841c03_7": "移取雲門山來。",
    "T47n1998A_008:0841c04_8": "即向汝道。",
    "T47n1998A_008:0841c05_0": "剏菴林司法為考大祥請示眾。",
    "T47n1998A_008:0841c05_1": "福城東有大長者。",
    "T47n1998A_008:0841c06_2": "居福城東海嶼上。",
    "T47n1998A_008:0841c06_3": "於不思議塵劫中。",
    "T47n1998A_008:0841c06_4": "承事供養無數佛。",
    "T47n1998A_008:0841c07_5": "善哉長者世希有。",
    "T47n1998A_008:0841c07_6": "如優曇華時一現。",
    "T47n1998A_008:0841c08_7": "發啟廣大真實心。",
    "T47n1998A_008:0841c08_8": "剏無佛處阿蘭若。",
    "T47n1998A_008:0841c09_0": "若昔智人建梵剎。",
    "T47n1998A_008:0841c09_1": "折草插地即成就。",
    "T47n1998A_008:0841c09_2": "此心堅固等須彌。",
    "T47n1998A_008:0841c10_3": "或讚或毀不搖動。",
    "T47n1998A_008:0841c10_4": "魔王軍眾數甚多。",
    "T47n1998A_008:0841c11_5": "覩茲殊勝自摧伏。",
    "T47n1998A_008:0841c11_6": "長者視身如浮雲。",
    "T47n1998A_008:0841c11_7": "變滅須臾不長久。",
    "T47n1998A_008:0841c12_8": "當生佛國時節來。",
    "T47n1998A_008:0841c12_9": "撒手便行不回顧。",
    "T47n1998A_008:0841c13_10": "有子遵義起其家。",
    "T47n1998A_008:0841c13_11": "志願身心俱及第。",
    "T47n1998A_008:0841c13_12": "仁者則壽語不誣。",
    "T47n1998A_008:0841c14_13": "當知今亦未甞死。",
    "T47n1998A_008:0841c14_14": "我來居是阿蘭若。",
    "T47n1998A_008:0841c15_15": "不見長者生遺恨。",
    "T47n1998A_008:0841c15_16": "故說此偈聊發揚。",
    "T47n1998A_008:0841c16_0": "同住如來寂滅海。",
    "T47n1998A_008:0841c17_0": "示眾。",
    "T47n1998A_008:0841c17_1": "以字不成八字。",
    "T47n1998A_008:0841c17_2": "非爍迦羅眼不能窺。",
    "T47n1998A_008:0841c17_3": "一毛頭上重拈出。",
    "T47n1998A_008:0841c18_4": "忿怒那吒失却威。",
    "T47n1998A_008:0841c19_0": "示眾。",
    "T47n1998A_008:0841c19_1": "一句中具三玄門。",
    "T47n1998A_008:0841c19_2": "一玄門有三要路。",
    "T47n1998A_008:0841c19_3": "臨濟小廝兒。",
    "T47n1998A_008:0841c20_4": "只具一隻眼。",
    "T47n1998A_008:0841c20_5": "四方八面來。",
    "T47n1998A_008:0841c20_6": "只打中間底。",
    "T47n1998A_008:0841c21_7": "卒風暴雨時。",
    "T47n1998A_008:0841c21_8": "向古廓裏嚲得過。",
    "T47n1998A_008:0841c21_9": "興化老凍膿。",
    "T47n1998A_008:0841c22_10": "全未夢見在。",
    "T47n1998A_008:0841c22_11": "至道無難唯嫌揀擇。",
    "T47n1998A_008:0841c23_0": "是時人窠窟。",
    "T47n1998A_008:0841c23_1": "趙州古佛。",
    "T47n1998A_008:0841c23_2": "直得五年分疎不下。",
    "T47n1998A_008:0841c24_0": "灼然鵝王擇乳。",
    "T47n1998A_008:0841c24_1": "素非鴨類。",
    "T47n1998A_008:0841c24_2": "有佛處不得住。",
    "T47n1998A_008:0841c24_3": "無佛處急走過。",
    "T47n1998A_008:0841c25_4": "三千里外逢人不得錯舉。",
    "T47n1998A_008:0841c25_5": "揭却腦蓋換却眼睛。",
    "T47n1998A_008:0841c26_6": "汝等諸人。",
    "T47n1998A_008:0841c26_7": "不用鑽龜打瓦。",
    "T47n1998A_008:0841c26_8": "百丈被馬祖一喝。",
    "T47n1998A_008:0841c27_9": "直得三日耳聾。",
    "T47n1998A_008:0841c27_10": "作麼生圖度。",
    "T47n1998A_008:0841c28_0": "切忌停囚長智。",
    "T47n1998A_008:0841c28_1": "恁麼也不得。",
    "T47n1998A_008:0841c28_2": "不恁麼也不得。",
    "T47n1998A_008:0841c29_0": "恁麼不恁麼總不得。",
    "T47n1998A_008:0841c29_1": "含元殿裏休問長安。",
    "T47n1998A_008:0841c29_2": "莫認驢鞍橋。",
    "T47n1998A_008:0842a01_3": "作阿爺下頷。",
    "T47n1998A_008:0842a01_4": "既然如是。",
    "T47n1998A_008:0842a01_5": "向這裏說。",
    "T47n1998A_008:0842a02_0": "高高峯頂立。",
    "T47n1998A_008:0842a02_1": "深深海底行。",
    "T47n1998A_008:0842a02_2": "得麼。",
    "T47n1998A_008:0842a02_3": "香象渡河截流而過得麼。",
    "T47n1998A_008:0842a03_4": "如金翅擘海直取龍吞得麼。",
    "T47n1998A_008:0842a03_5": "既不許恁麼。",
    "T47n1998A_008:0842a04_6": "如今不免且作死馬醫。",
    "T47n1998A_008:0842a04_7": "驀拈拄杖卓一下云。",
    "T47n1998A_008:0842a05_8": "太陽溢目。",
    "T47n1998A_008:0842a05_9": "萬里不掛片雲。",
    "T47n1998A_008:0842a05_10": "超佛越祖之談。",
    "T47n1998A_008:0842a06_11": "已為掃來填溝塞壑了也。",
    "T47n1998A_008:0842a06_12": "且道。",
    "T47n1998A_008:0842a06_13": "清平木杓笊籬井索錢貫。",
    "T47n1998A_008:0842a07_14": "雪峯輥毬禾山打鼓。",
    "T47n1998A_008:0842a08_0": "畢竟向衲僧分上。",
    "T47n1998A_008:0842a08_1": "成得箇甚麼邊事。",
    "T47n1998A_008:0842a08_2": "還委悉麼。",
    "T47n1998A_008:0842a09_3": "莫待是非來入耳。",
    "T47n1998A_008:0842a09_4": "從前知己反為讎。",
    "T47n1998A_008:0842a09_5": "復卓一下喝一喝。",
    "T47n1998A_008:0842a11_0": "善友請示眾。",
    "T47n1998A_008:0842a11_1": "心空及第無階級。",
    "T47n1998A_008:0842a11_2": "直下忘懷罪性空。",
    "T47n1998A_008:0842a12_3": "一念廓然三際斷。",
    "T47n1998A_008:0842a12_4": "千差萬別盡圓通。",
    "T47n1998A_008:0842a13_0": "示眾。",
    "T47n1998A_008:0842a13_1": "針鋒頭上透天關。",
    "T47n1998A_008:0842a13_2": "著意忘懷兩不堪。",
    "T47n1998A_008:0842a13_3": "直下早踰千萬劫。",
    "T47n1998A_008:0842a14_4": "即今成佛未同參。",
    "T47n1998A_008:0842a14_5": "所以雪峯道。",
    "T47n1998A_008:0842a15_6": "望州亭與汝相見了也。",
    "T47n1998A_008:0842a15_7": "烏石嶺與汝相見了也。",
    "T47n1998A_008:0842a16_8": "僧堂前與汝相見了也。",
    "T47n1998A_008:0842a16_9": "若是靈利漢。",
    "T47n1998A_008:0842a16_10": "聊聞舉著。",
    "T47n1998A_008:0842a17_11": "剔起便行。",
    "T47n1998A_008:0842a17_12": "更不周由者也。",
    "T47n1998A_008:0842a17_13": "還委悉麼。",
    "T47n1998A_008:0842a18_0": "出頭天外看。",
    "T47n1998A_008:0842a18_1": "誰是我般人。",
    "T47n1998A_008:0842a19_0": "陳氏為考妣懺塔請示眾。",
    "T47n1998A_008:0842a19_1": "普賢身相無有二。",
    "T47n1998A_008:0842a20_0": "八萬四千毛孔剎。",
    "T47n1998A_008:0842a20_1": "一一毛孔一如來。",
    "T47n1998A_008:0842a20_2": "一一如來一塔廟。",
    "T47n1998A_008:0842a21_3": "舍利堅固金剛身。",
    "T47n1998A_008:0842a21_4": "虛空可壞此不朽。",
    "T47n1998A_008:0842a22_5": "女子陳氏報劬勞。",
    "T47n1998A_008:0842a22_6": "一一塔廟一瞻禮。",
    "T47n1998A_008:0842a22_7": "滿足八萬四千拜。",
    "T47n1998A_008:0842a23_8": "盡諸毛孔無有遺。",
    "T47n1998A_008:0842a23_9": "所獲功德不可量。",
    "T47n1998A_008:0842a24_10": "正與普賢行願等。",
    "T47n1998A_008:0842a24_11": "用嚴慈父及慈母。",
    "T47n1998A_008:0842a24_12": "遍及法界諸有情永離苦海證菩提。",
    "T47n1998A_008:0842a25_13": "悉得心空超彼岸。",
    "T47n1998A_008:0842a27_0": "福州洋嶼菴語錄(終)",
    "T47n1998A_008:0842a28_0": "泉州小豁雲門菴語錄。",
    "T47n1998A_008:0842a29_0": "入菴示眾。",
    "T47n1998A_008:0842a29_1": "舉波斯匿王問世尊。",
    "T47n1998A_008:0842a29_2": "勝義諦中還有世俗諦否。",
    "T47n1998A_008:0842b01_3": "若言其有。",
    "T47n1998A_008:0842b01_4": "智不應一。",
    "T47n1998A_008:0842b01_5": "若言其無。",
    "T47n1998A_008:0842b02_6": "智不應二。",
    "T47n1998A_008:0842b02_7": "一二之義。",
    "T47n1998A_008:0842b02_8": "其義云何。",
    "T47n1998A_008:0842b02_9": "世尊答曰。",
    "T47n1998A_008:0842b03_10": "汝於過去龍光佛所。",
    "T47n1998A_008:0842b03_11": "曾問此義。",
    "T47n1998A_008:0842b03_12": "我今無說。",
    "T47n1998A_008:0842b04_0": "汝亦無聞。",
    "T47n1998A_008:0842b04_1": "無說無聞。",
    "T47n1998A_008:0842b04_2": "是名一義二義。",
    "T47n1998A_008:0842b04_3": "師云。",
    "T47n1998A_008:0842b04_4": "大小釋迦老子。",
    "T47n1998A_008:0842b05_5": "被箇俗漢等閑拽轉鼻孔。",
    "T47n1998A_008:0842b05_6": "直得分疎不下。",
    "T47n1998A_008:0842b06_7": "今日或有人問雲門。",
    "T47n1998A_008:0842b06_8": "勝義諦中還有世俗諦否。",
    "T47n1998A_008:0842b07_9": "若言其有。",
    "T47n1998A_008:0842b07_10": "智不應一。",
    "T47n1998A_008:0842b07_11": "若言其無。",
    "T47n1998A_008:0842b08_0": "智不應二。",
    "T47n1998A_008:0842b08_1": "一二之義。",
    "T47n1998A_008:0842b08_2": "其義云何。",
    "T47n1998A_008:0842b08_3": "且作麼生支遣。",
    "T47n1998A_008:0842b09_4": "良久云。",
    "T47n1998A_008:0842b09_5": "插一枝草建梵剎。",
    "T47n1998A_008:0842b09_6": "破妄想塵出經卷。",
    "T47n1998A_008:0842b10_7": "饒益廣大諸有情。",
    "T47n1998A_008:0842b10_8": "成就無邊希有事。",
    "T47n1998A_008:0842b10_9": "驀拈拄杖卓一下云。",
    "T47n1998A_008:0842b11_10": "梵剎已建。",
    "T47n1998A_008:0842b11_11": "妄想塵已破。",
    "T47n1998A_008:0842b11_12": "大經卷已出。",
    "T47n1998A_008:0842b12_13": "頓漸偏圓權實半滿。",
    "T47n1998A_008:0842b12_14": "一一分明。",
    "T47n1998A_008:0842b12_15": "種種法門種種方便。",
    "T47n1998A_008:0842b13_16": "種種智慧種種因果。",
    "T47n1998A_008:0842b13_17": "種種殊勝種種行願種種莊嚴。",
    "T47n1998A_008:0842b14_18": "只在檀越給事一毛端上以妙明心印一印印定。",
    "T47n1998A_008:0842b15_19": "還信得及麼。",
    "T47n1998A_008:0842b15_20": "若信得及。",
    "T47n1998A_008:0842b16_21": "即今成佛不假修治。",
    "T47n1998A_008:0842b16_22": "非但檀越給事如是。",
    "T47n1998A_008:0842b17_23": "乃至過現未來微塵諸佛諸代祖師。",
    "T47n1998A_008:0842b17_24": "古往今來一切知識天下老和尚舌頭。",
    "T47n1998A_008:0842b18_25": "亦以此印印定。",
    "T47n1998A_008:0842b19_26": "無異無同。",
    "T47n1998A_008:0842b19_27": "一一妙明。",
    "T47n1998A_008:0842b19_28": "一一具足。",
    "T47n1998A_008:0842b19_29": "修如是行。",
    "T47n1998A_008:0842b20_30": "成如是事。",
    "T47n1998A_008:0842b20_31": "滿如是願。",
    "T47n1998A_008:0842b20_32": "獲如是福。",
    "T47n1998A_008:0842b20_33": "無古無今。",
    "T47n1998A_008:0842b21_34": "無終無始。",
    "T47n1998A_008:0842b21_35": "無成無壞。",
    "T47n1998A_008:0842b21_36": "無悟無迷。",
    "T47n1998A_008:0842b21_37": "如是了達。",
    "T47n1998A_008:0842b22_38": "如是證入。",
    "T47n1998A_008:0842b22_39": "如是究竟。",
    "T47n1998A_008:0842b22_40": "亦只在檀越給事一毛端上。",
    "T47n1998A_008:0842b23_41": "不異善財入彌勒樓閣。",
    "T47n1998A_008:0842b23_42": "塵沙法門一時頓證。",
    "T47n1998A_008:0842b24_43": "無量功德遍處莊嚴。",
    "T47n1998A_008:0842b24_44": "如帝網交光互相融通。",
    "T47n1998A_008:0842b25_45": "互相攝入互為主伴。",
    "T47n1998A_008:0842b25_46": "一一周匝一一無偏。",
    "T47n1998A_008:0842b26_47": "普令無數善心不善心眾生。",
    "T47n1998A_008:0842b26_48": "覩諸殊勝皆發。",
    "T47n1998A_008:0842b27_49": "無上正等菩提之心生希有想。",
    "T47n1998A_008:0842b27_50": "非但檀越給事如是。",
    "T47n1998A_008:0842b28_51": "雲門今日亦如是。",
    "T47n1998A_008:0842b28_52": "非但雲門與給事如是。",
    "T47n1998A_008:0842b29_53": "現前僧俗大眾一一平等一一無差一一如是。",
    "T47n1998A_008:0842c01_54": "正當恁麼時。",
    "T47n1998A_008:0842c01_55": "且道。",
    "T47n1998A_008:0842c01_56": "是勝義諦耶。",
    "T47n1998A_008:0842c02_0": "是世俗諦耶。",
    "T47n1998A_008:0842c02_1": "是有耶是無耶。",
    "T47n1998A_008:0842c02_2": "是一義耶是二義耶。",
    "T47n1998A_008:0842c03_3": "是說耶是無說耶。",
    "T47n1998A_008:0842c03_4": "是智耶是無智耶。",
    "T47n1998A_008:0842c03_5": "是聞耶是無聞耶。",
    "T47n1998A_008:0842c04_6": "試斷看。",
    "T47n1998A_008:0842c04_7": "若斷得出。",
    "T47n1998A_008:0842c04_8": "檀越給事。",
    "T47n1998A_008:0842c05_0": "建大寶坊。",
    "T47n1998A_008:0842c05_1": "作大佛事。",
    "T47n1998A_008:0842c05_2": "功不唐捐若斷不出。",
    "T47n1998A_008:0842c05_3": "雲門為蛇畫足去也。",
    "T47n1998A_008:0842c06_4": "擲下拄杖拍禪床云。",
    "T47n1998A_008:0842c06_5": "透過鐵圍山。",
    "T47n1998A_008:0842c07_6": "北斗面南看。",
    "T47n1998A_008:0842c08_0": "浴佛示眾。",
    "T47n1998A_008:0842c08_1": "末後一句子。",
    "T47n1998A_008:0842c08_2": "聲前露裸裸。",
    "T47n1998A_008:0842c08_3": "蓋天蓋地蓋聲蓋色。",
    "T47n1998A_008:0842c09_4": "黃面老子得箇一著子。",
    "T47n1998A_008:0842c09_5": "便道。",
    "T47n1998A_008:0842c09_6": "未離兜率已降王宮。",
    "T47n1998A_008:0842c10_7": "未出母胎度人已畢。",
    "T47n1998A_008:0842c10_8": "及至初生。",
    "T47n1998A_008:0842c11_9": "則震動一切世界網。",
    "T47n1998A_008:0842c11_10": "便一手指天一手指地。",
    "T47n1998A_008:0842c12_11": "作大師子吼道。",
    "T47n1998A_008:0842c12_12": "天上天下惟我獨尊。",
    "T47n1998A_008:0842c13_0": "為一大事因緣故。",
    "T47n1998A_008:0842c13_1": "開佛知見示佛知見。",
    "T47n1998A_008:0842c13_2": "悟佛知見入佛知見。",
    "T47n1998A_008:0842c14_3": "殊不知。",
    "T47n1998A_008:0842c14_4": "數千年後被箇跛脚阿師要一棒打殺與狗子喫。",
    "T47n1998A_008:0842c15_5": "貴圖天下太平。",
    "T47n1998A_008:0842c16_0": "且道。",
    "T47n1998A_008:0842c16_1": "釋迦老子過在甚麼處。",
    "T47n1998A_008:0842c16_2": "莫是指天指地開大口麼。",
    "T47n1998A_008:0842c17_3": "莫是不合鼓弄人家男女麼。",
    "T47n1998A_008:0842c17_4": "莫是開佛知見示佛知見悟佛知見入佛知見麼。",
    "T47n1998A_008:0842c19_0": "若恁麼商量。",
    "T47n1998A_008:0842c19_1": "不唯謗他釋迦老子。",
    "T47n1998A_008:0842c19_2": "亦乃辜負雲門大師。",
    "T47n1998A_008:0842c20_3": "到這裏若知雲門落處。",
    "T47n1998A_008:0842c20_4": "即知自己落處。",
    "T47n1998A_008:0842c21_5": "且道。",
    "T47n1998A_008:0842c21_6": "落在甚麼處。",
    "T47n1998A_008:0842c21_7": "良久云。",
    "T47n1998A_008:0842c21_8": "萬古碧潭空界月。",
    "T47n1998A_008:0842c22_9": "再三撈摝始應知。",
    "T47n1998A_008:0842c22_10": "復舉。",
    "T47n1998A_008:0842c22_11": "僧問五祖。",
    "T47n1998A_008:0842c22_12": "如何是佛。",
    "T47n1998A_008:0842c23_13": "祖云。",
    "T47n1998A_008:0842c23_14": "露胸跣足。",
    "T47n1998A_008:0842c23_15": "如何是法。",
    "T47n1998A_008:0842c23_16": "云大赦不放。",
    "T47n1998A_008:0842c24_17": "如何是僧。",
    "T47n1998A_008:0842c24_18": "云釣漁船上謝三郎。",
    "T47n1998A_008:0842c24_19": "師云。",
    "T47n1998A_008:0842c24_20": "此三轉語。",
    "T47n1998A_008:0842c25_21": "一轉具三玄三要。",
    "T47n1998A_008:0842c25_22": "四料揀四賓主。",
    "T47n1998A_008:0842c25_23": "洞山五位雲門三句。",
    "T47n1998A_008:0842c26_24": "百千法門無量妙義。",
    "T47n1998A_008:0842c26_25": "若人揀得。",
    "T47n1998A_008:0842c27_26": "許爾具一隻眼。",
    "T47n1998A_008:0842c28_0": "結夏示眾。",
    "T47n1998A_008:0842c28_1": "今日是眾僧結制之辰。",
    "T47n1998A_008:0842c28_2": "雲門菴比丘宗杲。",
    "T47n1998A_008:0842c29_3": "與赤肉團上無位真人現前清淨大眾。",
    "T47n1998A_008:0843a01_4": "以法界為伽藍。",
    "T47n1998A_008:0843a01_5": "同諸菩薩九十日內安居其中。",
    "T47n1998A_008:0843a02_6": "跳金剛圈吞栗棘蓬。",
    "T47n1998A_008:0843a02_7": "作夢中佛事。",
    "T47n1998A_008:0843a02_8": "降鏡裏魔軍。",
    "T47n1998A_008:0843a03_9": "三業清淨六根明潔。",
    "T47n1998A_008:0843a03_10": "身四威儀無諸過患。",
    "T47n1998A_008:0843a04_11": "懸契如來一百四十大願。",
    "T47n1998A_008:0843a04_12": "紹三寶種永不斷絕。",
    "T47n1998A_008:0843a05_13": "苟能如是修證。",
    "T47n1998A_008:0843a05_14": "如是安居。",
    "T47n1998A_008:0843a05_15": "是大丈夫漢。",
    "T47n1998A_008:0843a06_16": "是真出家兒。",
    "T47n1998A_008:0843a06_17": "不須謹守蠟人如鵝護雪。",
    "T47n1998A_008:0843a07_0": "其或未然。",
    "T47n1998A_008:0843a07_1": "趙州東壁掛葫蘆。",
    "T47n1998A_008:0843a07_2": "莫道不疑好。",
    "T47n1998A_008:0843a08_0": "拍禪床下座。",
    "T47n1998A_008:0843a09_0": "示眾。",
    "T47n1998A_008:0843a09_1": "雲門昨日晝寢。",
    "T47n1998A_008:0843a09_2": "夢乘一葉輕舟。",
    "T47n1998A_008:0843a09_3": "泛東大洋海。",
    "T47n1998A_008:0843a10_4": "騎新修佛殿。",
    "T47n1998A_008:0843a10_5": "入螻蟻穴中。",
    "T47n1998A_008:0843a10_6": "迤邐行到十字街頭萬人叢裏。",
    "T47n1998A_008:0843a11_7": "見一隊彊項衲僧。",
    "T47n1998A_008:0843a11_8": "口裏談玄演妙。",
    "T47n1998A_008:0843a12_9": "舉古明今。",
    "T47n1998A_008:0843a12_10": "說靈雲見桃華悟道。",
    "T47n1998A_008:0843a12_11": "香嚴聞擊竹明心。",
    "T47n1998A_008:0843a13_12": "雪峯連年輥毬。",
    "T47n1998A_008:0843a13_13": "禾山長時打鼓。",
    "T47n1998A_008:0843a14_0": "事存函蓋合。",
    "T47n1998A_008:0843a14_1": "理應箭鋒拄。",
    "T47n1998A_008:0843a14_2": "方作此夢。",
    "T47n1998A_008:0843a14_3": "忽然被人驚覺。",
    "T47n1998A_008:0843a15_4": "元來却是喜通聚三上座鞵履作聲。",
    "T47n1998A_008:0843a16_0": "雲門雖然眼開。",
    "T47n1998A_008:0843a16_1": "猶在夢中未惺。",
    "T47n1998A_008:0843a16_2": "三上座近前作禮曰。",
    "T47n1998A_008:0843a17_3": "請和尚來日為眾說禪。",
    "T47n1998A_008:0843a17_4": "雲門夢裏應渠曰諾。",
    "T47n1998A_008:0843a18_5": "今日擊動法鼓。",
    "T47n1998A_008:0843a18_6": "大眾上來。",
    "T47n1998A_008:0843a18_7": "且道。",
    "T47n1998A_008:0843a18_8": "說箇甚麼即得。",
    "T47n1998A_008:0843a19_9": "昨日夢說禪。",
    "T47n1998A_008:0843a19_10": "如今禪說夢。",
    "T47n1998A_008:0843a19_11": "夢時夢如今說底。",
    "T47n1998A_008:0843a20_12": "說時說昨日夢底。",
    "T47n1998A_008:0843a20_13": "昨日合眼夢。",
    "T47n1998A_008:0843a20_14": "如今開眼夢。",
    "T47n1998A_008:0843a21_15": "諸人總在夢中聽。",
    "T47n1998A_008:0843a21_16": "雲門復說夢中夢。",
    "T47n1998A_008:0843a22_17": "良久云。",
    "T47n1998A_008:0843a22_18": "驢脣先生開口笑。",
    "T47n1998A_008:0843a22_19": "阿脩羅王打勃跳。",
    "T47n1998A_008:0843a23_20": "海神失却夜明珠。",
    "T47n1998A_008:0843a23_21": "擘破彌盧穿七竅。",
    "T47n1998A_008:0843a23_22": "三人上座請談禪。",
    "T47n1998A_008:0843a24_23": "平地無風浪拍天。",
    "T47n1998A_008:0843a24_24": "禪禪不用思量卜度。",
    "T47n1998A_008:0843a25_25": "非干文字語言。",
    "T47n1998A_008:0843a25_26": "仰之彌高。",
    "T47n1998A_008:0843a25_27": "鑽之彌堅。",
    "T47n1998A_008:0843a26_0": "巖頭剗之則曰。",
    "T47n1998A_008:0843a26_1": "是句非句。",
    "T47n1998A_008:0843a26_2": "臨濟用之則曰。",
    "T47n1998A_008:0843a26_3": "三要三玄。",
    "T47n1998A_008:0843a27_4": "禪禪吞却栗棘蓬。",
    "T47n1998A_008:0843a27_5": "透出金剛圈。",
    "T47n1998A_008:0843a27_6": "休論趙州老漢庭前柏樹子。",
    "T47n1998A_008:0843a28_7": "莫問首山新婦騎驢阿家牽。",
    "T47n1998A_008:0843a29_8": "但請一時放下著。",
    "T47n1998A_008:0843a29_9": "當人本體自周圓。",
    "T47n1998A_008:0843b01_0": "召大眾云。",
    "T47n1998A_008:0843b01_1": "且作麼生說箇周圓底道理。",
    "T47n1998A_008:0843b01_2": "夢裏明明有六趣。",
    "T47n1998A_008:0843b02_3": "覺後空空無大千。",
    "T47n1998A_008:0843b02_4": "喝一喝。",
    "T47n1998A_008:0843b03_0": "解夏示眾。",
    "T47n1998A_008:0843b03_1": "衲僧相見莫疑猜。",
    "T47n1998A_008:0843b03_2": "布袋結頭今日開。",
    "T47n1998A_008:0843b04_3": "露柱著衫南嶽去。",
    "T47n1998A_008:0843b04_4": "燈籠脫帽上天台。",
    "T47n1998A_008:0843b04_5": "驀拈拄杖云。",
    "T47n1998A_008:0843b05_6": "只有雲門木上座。",
    "T47n1998A_008:0843b05_7": "終年無去亦無來。",
    "T47n1998A_008:0843b06_0": "有時獨靠古屏畔。",
    "T47n1998A_008:0843b06_1": "覷破門前下馬臺。",
    "T47n1998A_008:0843b06_2": "擲下拄杖下座。",
    "T47n1998A_008:0843b08_0": "示眾。",
    "T47n1998A_008:0843b08_1": "舉一不得舉二。",
    "T47n1998A_008:0843b08_2": "放過一著落在第二。",
    "T47n1998A_008:0843b08_3": "遇貴則賤。",
    "T47n1998A_008:0843b09_4": "遇賤則貴。",
    "T47n1998A_008:0843b09_5": "築著磕著。",
    "T47n1998A_008:0843b09_6": "沒處回避。",
    "T47n1998A_008:0843b09_7": "南嶽天台去路通。",
    "T47n1998A_008:0843b10_8": "君向西兮我向東。",
    "T47n1998A_008:0843b10_9": "風從虎兮雲從龍。",
    "T47n1998A_008:0843b11_10": "喝一喝云。",
    "T47n1998A_008:0843b11_11": "拈起簸箕別處舂。",
    "T47n1998A_008:0843b11_12": "熨斗煎茶銚不同。",
    "T47n1998A_008:0843b13_0": "示眾。",
    "T47n1998A_008:0843b13_1": "舉僧問雲門。",
    "T47n1998A_008:0843b13_2": "如何是道。",
    "T47n1998A_008:0843b13_3": "門云。",
    "T47n1998A_008:0843b13_4": "透出一字。",
    "T47n1998A_008:0843b14_5": "師云。",
    "T47n1998A_008:0843b14_6": "透出一字却不相似。",
    "T47n1998A_008:0843b14_7": "急轉頭來張三李四。",
    "T47n1998A_008:0843b15_8": "下座。",
    "T47n1998A_008:0843b16_0": "示眾。",
    "T47n1998A_008:0843b16_1": "舉教中道。",
    "T47n1998A_008:0843b16_2": "生滅滅已寂滅現前。",
    "T47n1998A_008:0843b16_3": "師云。",
    "T47n1998A_008:0843b16_4": "真生無可生。",
    "T47n1998A_008:0843b17_5": "真滅無可滅。",
    "T47n1998A_008:0843b17_6": "寂滅忽現前。",
    "T47n1998A_008:0843b17_7": "蝦蟆吞却月。",
    "T47n1998A_008:0843b19_0": "示眾。",
    "T47n1998A_008:0843b19_1": "舉僧問趙州。",
    "T47n1998A_008:0843b19_2": "百骸俱潰散。",
    "T47n1998A_008:0843b19_3": "一物鎮長靈時如何。",
    "T47n1998A_008:0843b20_4": "州云。",
    "T47n1998A_008:0843b20_5": "今朝又風起。",
    "T47n1998A_008:0843b20_6": "師云。",
    "T47n1998A_008:0843b20_7": "今朝又風起。",
    "T47n1998A_008:0843b21_8": "鬧處莫插觜。",
    "T47n1998A_008:0843b21_9": "觸著閻羅王。",
    "T47n1998A_008:0843b21_10": "帶累陰司鬼。",
    "T47n1998A_008:0843b22_0": "示眾。",
    "T47n1998A_008:0843b22_1": "舉法眼問覺鐵觜。",
    "T47n1998A_008:0843b22_2": "近離甚處。",
    "T47n1998A_008:0843b22_3": "覺云。",
    "T47n1998A_008:0843b22_4": "趙州。",
    "T47n1998A_008:0843b23_5": "眼云。",
    "T47n1998A_008:0843b23_6": "承聞趙州有柏樹子話是否。",
    "T47n1998A_008:0843b23_7": "覺云無。",
    "T47n1998A_008:0843b24_0": "眼云。",
    "T47n1998A_008:0843b24_1": "往來皆謂。",
    "T47n1998A_008:0843b24_2": "僧問。",
    "T47n1998A_008:0843b24_3": "如何是祖師西來意。",
    "T47n1998A_008:0843b24_4": "州云。",
    "T47n1998A_008:0843b25_5": "庭前柏樹子。",
    "T47n1998A_008:0843b25_6": "上座何得道無。",
    "T47n1998A_008:0843b25_7": "覺云。",
    "T47n1998A_008:0843b25_8": "先師實無此語。",
    "T47n1998A_008:0843b26_9": "和尚莫謗先師好。",
    "T47n1998A_008:0843b26_10": "師去。",
    "T47n1998A_008:0843b26_11": "若道有此語。",
    "T47n1998A_008:0843b27_12": "蹉過覺鐵觜。",
    "T47n1998A_008:0843b27_13": "若道無此語。",
    "T47n1998A_008:0843b27_14": "又蹉過法眼。",
    "T47n1998A_008:0843b28_0": "若道兩邊都不涉。",
    "T47n1998A_008:0843b28_1": "又蹉過趙州。",
    "T47n1998A_008:0843b28_2": "直饒總不恁麼。",
    "T47n1998A_008:0843b29_3": "別有透脫一路。",
    "T47n1998A_008:0843b29_4": "入地獄如箭射。",
    "T47n1998A_008:0843b29_5": "畢竟如何。",
    "T47n1998A_008:0843c01_0": "舉起拂子云。",
    "T47n1998A_008:0843c01_1": "還見古人麼。",
    "T47n1998A_008:0843c01_2": "喝一喝。",
    "T47n1998A_008:0843c02_0": "示眾。",
    "T47n1998A_008:0843c02_1": "舉青原思和尚問六祖。",
    "T47n1998A_008:0843c02_2": "當何所務即不落階級。",
    "T47n1998A_008:0843c03_3": "祖云。",
    "T47n1998A_008:0843c03_4": "汝曾作甚麼來。",
    "T47n1998A_008:0843c03_5": "思云。",
    "T47n1998A_008:0843c03_6": "聖諦亦不為。",
    "T47n1998A_008:0843c04_7": "祖云。",
    "T47n1998A_008:0843c04_8": "落何階級。",
    "T47n1998A_008:0843c04_9": "思云。",
    "T47n1998A_008:0843c04_10": "聖諦尚不為。",
    "T47n1998A_008:0843c04_11": "何階級之有。",
    "T47n1998A_008:0843c05_12": "祖深器之。",
    "T47n1998A_008:0843c05_13": "師云。",
    "T47n1998A_008:0843c05_14": "莫將閑話為閑話。",
    "T47n1998A_008:0843c05_15": "往往事從閑話生。",
    "T47n1998A_008:0843c07_0": "示眾。",
    "T47n1998A_008:0843c07_1": "舉龐居士問靈照女。",
    "T47n1998A_008:0843c07_2": "明明百草頭。",
    "T47n1998A_008:0843c07_3": "明明祖師意。",
    "T47n1998A_008:0843c08_4": "作麼生會。",
    "T47n1998A_008:0843c08_5": "照云。",
    "T47n1998A_008:0843c08_6": "這老漢頭白齒黃。",
    "T47n1998A_008:0843c09_7": "作這箇見解。",
    "T47n1998A_008:0843c09_8": "居士云。",
    "T47n1998A_008:0843c09_9": "爾作麼生。",
    "T47n1998A_008:0843c09_10": "照云。",
    "T47n1998A_008:0843c09_11": "明明百草頭。",
    "T47n1998A_008:0843c10_12": "明明祖師意。",
    "T47n1998A_008:0843c10_13": "師云。",
    "T47n1998A_008:0843c10_14": "龐居士先行不到。",
    "T47n1998A_008:0843c11_15": "靈照女末後太過。",
    "T47n1998A_008:0843c11_16": "直饒齊行齊到。",
    "T47n1998A_008:0843c11_17": "若到雲門。",
    "T47n1998A_008:0843c12_18": "一坑埋却。",
    "T47n1998A_008:0843c12_19": "且道。",
    "T47n1998A_008:0843c12_20": "過在甚麼處。",
    "T47n1998A_008:0843c12_21": "明明百草頭。",
    "T47n1998A_008:0843c13_22": "明明祖師意。",
    "T47n1998A_008:0843c14_0": "示眾。",
    "T47n1998A_008:0843c14_1": "舉雲門云百草頭上道將一句來。",
    "T47n1998A_008:0843c14_2": "眾無語。",
    "T47n1998A_008:0843c15_3": "自代云俱。",
    "T47n1998A_008:0843c15_4": "圜悟老師云劄。",
    "T47n1998A_008:0843c15_5": "師云普。",
    "T47n1998A_008:0843c15_6": "復云。",
    "T47n1998A_008:0843c16_0": "俱劄普日輪午。",
    "T47n1998A_008:0843c16_1": "李將軍射石虎。",
    "T47n1998A_008:0843c16_2": "雖然透過那邊。",
    "T47n1998A_008:0843c17_3": "枉發千鈞之弩。",
    "T47n1998A_008:0843c18_0": "示眾。",
    "T47n1998A_008:0843c18_1": "舉僧問趙州。",
    "T47n1998A_008:0843c18_2": "四山相逼時如何。",
    "T47n1998A_008:0843c18_3": "州云。",
    "T47n1998A_008:0843c19_0": "無路是趙州。",
    "T47n1998A_008:0843c19_1": "師云。",
    "T47n1998A_008:0843c19_2": "無路是趙州。",
    "T47n1998A_008:0843c19_3": "老將足機籌。",
    "T47n1998A_008:0843c20_4": "關南并塞北。",
    "T47n1998A_008:0843c20_5": "當下一時收。",
    "T47n1998A_008:0843c21_0": "李參政請示眾。",
    "T47n1998A_008:0843c21_1": "舉裴相國入寺。",
    "T47n1998A_008:0843c21_2": "見壁間畫像。",
    "T47n1998A_008:0843c22_0": "問院主云。",
    "T47n1998A_008:0843c22_1": "壁間是甚麼。",
    "T47n1998A_008:0843c22_2": "主云。",
    "T47n1998A_008:0843c22_3": "高僧。",
    "T47n1998A_008:0843c22_4": "裴云。",
    "T47n1998A_008:0843c22_5": "形儀可觀。",
    "T47n1998A_008:0843c23_6": "高僧在甚麼處。",
    "T47n1998A_008:0843c23_7": "主無語。",
    "T47n1998A_008:0843c23_8": "裴云。",
    "T47n1998A_008:0843c23_9": "這裏莫有禪僧麼。",
    "T47n1998A_008:0843c24_10": "時黃檗在眾。",
    "T47n1998A_008:0843c24_11": "院主云。",
    "T47n1998A_008:0843c24_12": "有一希運上座。",
    "T47n1998A_008:0843c25_13": "頗似禪僧。",
    "T47n1998A_008:0843c25_14": "裴遂召黃檗。",
    "T47n1998A_008:0843c25_15": "舉前話似之。",
    "T47n1998A_008:0843c25_16": "檗云。",
    "T47n1998A_008:0843c26_17": "但請問來。",
    "T47n1998A_008:0843c26_18": "裴云。",
    "T47n1998A_008:0843c26_19": "形儀可觀。",
    "T47n1998A_008:0843c26_20": "高僧在甚麼處。",
    "T47n1998A_008:0843c27_21": "檗召相公。",
    "T47n1998A_008:0843c27_22": "公應諾。",
    "T47n1998A_008:0843c27_23": "檗云。",
    "T47n1998A_008:0843c27_24": "在甚麼處。",
    "T47n1998A_008:0843c27_25": "裴於言下領旨。",
    "T47n1998A_008:0843c28_26": "師云。",
    "T47n1998A_008:0843c28_27": "裴公將錯就錯。",
    "T47n1998A_008:0843c28_28": "脫盡根塵。",
    "T47n1998A_008:0843c28_29": "黃檗信口垂慈。",
    "T47n1998A_008:0843c29_30": "不費心力。",
    "T47n1998A_008:0843c29_31": "似地擎山。",
    "T47n1998A_008:0843c29_32": "不知山之孤峻。",
    "T47n1998A_008:0844a01_33": "如石含玉。",
    "T47n1998A_008:0844a01_34": "不知玉之無瑕。",
    "T47n1998A_008:0844a01_35": "雖然如是。",
    "T47n1998A_008:0844a01_36": "黃檗只有殺人刀。",
    "T47n1998A_008:0844a02_37": "且無活人劍。",
    "T47n1998A_008:0844a02_38": "今日大資相公或問雲門。",
    "T47n1998A_008:0844a03_39": "形儀可觀。",
    "T47n1998A_008:0844a03_40": "高僧在甚麼處。",
    "T47n1998A_008:0844a03_41": "雲門亦召云。",
    "T47n1998A_008:0844a04_42": "相公。",
    "T47n1998A_008:0844a04_43": "相公若應諾。",
    "T47n1998A_008:0844a04_44": "雲門即向道。",
    "T47n1998A_008:0844a04_45": "今日堂中特謝供養。",
    "T47n1998A_008:0844a06_0": "示眾。",
    "T47n1998A_008:0844a06_1": "舉僧問趙州。",
    "T47n1998A_008:0844a06_2": "如何是祖師西來意。",
    "T47n1998A_008:0844a06_3": "州云。",
    "T47n1998A_008:0844a07_0": "庭前柏樹子。",
    "T47n1998A_008:0844a07_1": "僧云。",
    "T47n1998A_008:0844a07_2": "和尚莫將境示人。",
    "T47n1998A_008:0844a07_3": "州云。",
    "T47n1998A_008:0844a07_4": "我不將境示人。",
    "T47n1998A_008:0844a08_5": "僧問。",
    "T47n1998A_008:0844a08_6": "如何是祖師西來意。",
    "T47n1998A_008:0844a08_7": "州云。",
    "T47n1998A_008:0844a09_0": "庭前柏樹子。",
    "T47n1998A_008:0844a09_1": "師云。",
    "T47n1998A_008:0844a09_2": "庭前柏樹子。",
    "T47n1998A_008:0844a09_3": "今日重新舉。",
    "T47n1998A_008:0844a10_0": "打破趙州關。",
    "T47n1998A_008:0844a10_1": "特地尋言語。",
    "T47n1998A_008:0844a10_2": "既是打破關。",
    "T47n1998A_008:0844a10_3": "為甚麼却尋言語。",
    "T47n1998A_008:0844a11_4": "當初將謂茅長短。",
    "T47n1998A_008:0844a11_5": "燒了元來地不平。",
    "T47n1998A_008:0844a13_0": "蔡郎中請示眾。",
    "T47n1998A_008:0844a13_1": "聊聞舉著便承當。",
    "T47n1998A_008:0844a13_2": "好肉無端已剜瘡。",
    "T47n1998A_008:0844a14_3": "著眼機輪上頭看。",
    "T47n1998A_008:0844a14_4": "方知兩兩不成雙。",
    "T47n1998A_008:0844a15_5": "驀拈拄杖云。",
    "T47n1998A_008:0844a15_6": "見之不取。",
    "T47n1998A_008:0844a15_7": "千載難忘。",
    "T47n1998A_008:0844a15_8": "三世諸佛諸代祖師天下老和尚。",
    "T47n1998A_008:0844a16_9": "被雲門拄杖子一口吞盡。",
    "T47n1998A_008:0844a17_10": "一大藏教填溝塞壑。",
    "T47n1998A_008:0844a17_11": "正當恁麼時。",
    "T47n1998A_008:0844a18_12": "設使德山棒如雨點。",
    "T47n1998A_008:0844a18_13": "臨濟喝似雷奔。",
    "T47n1998A_008:0844a18_14": "還如氈上翻筋斗。",
    "T47n1998A_008:0844a19_15": "鞾裏動指頭。",
    "T47n1998A_008:0844a19_16": "有甚麼用處。",
    "T47n1998A_008:0844a19_17": "恁麼說話。",
    "T47n1998A_008:0844a20_18": "太殺壓良為賤。",
    "T47n1998A_008:0844a20_19": "不識好惡。",
    "T47n1998A_008:0844a20_20": "或被一箇不惜性命底衲僧出來掀倒禪床喝散大眾。",
    "T47n1998A_008:0844a21_21": "也怪他不得。",
    "T47n1998A_008:0844a22_22": "即今還有麼。",
    "T47n1998A_008:0844a22_23": "如無。",
    "T47n1998A_008:0844a22_24": "雲門據欵結案去也。",
    "T47n1998A_008:0844a23_25": "卓拄杖一下。",
    "T47n1998A_008:0844a23_26": "復舉。",
    "T47n1998A_008:0844a23_27": "裴相國捧一尊像。",
    "T47n1998A_008:0844a24_0": "胡跪於黃檗前云。",
    "T47n1998A_008:0844a24_1": "請師安名。",
    "T47n1998A_008:0844a24_2": "檗云。",
    "T47n1998A_008:0844a24_3": "裴休。",
    "T47n1998A_008:0844a24_4": "裴應諾。",
    "T47n1998A_008:0844a25_5": "檗云。",
    "T47n1998A_008:0844a25_6": "與汝安名竟。",
    "T47n1998A_008:0844a25_7": "裴作禮云。",
    "T47n1998A_008:0844a25_8": "謝師安名。",
    "T47n1998A_008:0844a26_9": "師云。",
    "T47n1998A_008:0844a26_10": "裴公黃檗。",
    "T47n1998A_008:0844a26_11": "可謂如水入水。",
    "T47n1998A_008:0844a26_12": "似金博金。",
    "T47n1998A_008:0844a27_13": "雖然如是。",
    "T47n1998A_008:0844a27_14": "檢點將來。",
    "T47n1998A_008:0844a27_15": "不無滲漏。",
    "T47n1998A_008:0844a27_16": "今日蔡郎中。",
    "T47n1998A_008:0844a28_17": "或捧一尊像。",
    "T47n1998A_008:0844a28_18": "請雲門安名。",
    "T47n1998A_008:0844a28_19": "即向道。",
    "T47n1998A_008:0844a28_20": "清淨法身毘盧遮那佛。",
    "T47n1998A_008:0844a29_21": "若云謝師安名。",
    "T47n1998A_008:0844a29_22": "即向道。",
    "T47n1998A_008:0844b01_0": "下坡不走快便難逢。",
    "T47n1998A_008:0844b02_0": "儲大夫請示眾。",
    "T47n1998A_008:0844b02_1": "徹骨徹髓道一句。",
    "T47n1998A_008:0844b02_2": "三要三玄絕遮護。",
    "T47n1998A_008:0844b03_3": "竺乾四七例皆迷。",
    "T47n1998A_008:0844b03_4": "震旦二三渾未悟。",
    "T47n1998A_008:0844b04_0": "我說是言非正邪。",
    "T47n1998A_008:0844b04_1": "當機覿面休回互。",
    "T47n1998A_008:0844b04_2": "慇懃為報雲臺公。",
    "T47n1998A_008:0844b05_3": "俊鷹不打籬邊兔。",
    "T47n1998A_008:0844b06_0": "俊上座請示眾。",
    "T47n1998A_008:0844b06_1": "拈拄杖卓一下云。",
    "T47n1998A_008:0844b06_2": "文殊普賢觀音彌勒。",
    "T47n1998A_008:0844b07_3": "又卓一下云。",
    "T47n1998A_008:0844b07_4": "迦葉阿難寒山拾得。",
    "T47n1998A_008:0844b08_0": "又卓一下云。",
    "T47n1998A_008:0844b08_1": "只恁麼全是中全非。",
    "T47n1998A_008:0844b08_2": "又卓一下云。",
    "T47n1998A_008:0844b09_3": "不恁麼全非中全是。",
    "T47n1998A_008:0844b09_4": "如來說一合相即非一合相。",
    "T47n1998A_008:0844b10_5": "是名一合相。",
    "T47n1998A_008:0844b10_6": "放過一著。",
    "T47n1998A_008:0844b10_7": "文俊上座好與三十棒。",
    "T47n1998A_008:0844b11_8": "且道。",
    "T47n1998A_008:0844b11_9": "是賞他是罰他。",
    "T47n1998A_008:0844b11_10": "擲下云。",
    "T47n1998A_008:0844b11_11": "具眼衲僧。",
    "T47n1998A_008:0844b12_12": "試定當看。",
    "T47n1998A_008:0844b13_0": "示眾。",
    "T47n1998A_008:0844b13_1": "舉外道問佛。",
    "T47n1998A_008:0844b13_2": "不問有言不問無言。",
    "T47n1998A_008:0844b13_3": "世尊良久。",
    "T47n1998A_008:0844b14_4": "外道讚歎云。",
    "T47n1998A_008:0844b14_5": "世尊大慈大悲。",
    "T47n1998A_008:0844b14_6": "開我迷雲令我得入。",
    "T47n1998A_008:0844b15_7": "外道去後阿難問佛。",
    "T47n1998A_008:0844b15_8": "外道有何所證而言得入。",
    "T47n1998A_008:0844b16_9": "世尊云。",
    "T47n1998A_008:0844b16_10": "如世良馬見鞭影而行。",
    "T47n1998A_008:0844b17_0": "雪竇云。",
    "T47n1998A_008:0844b17_1": "邪正不分。",
    "T47n1998A_008:0844b17_2": "過由鞭影。",
    "T47n1998A_008:0844b17_3": "師云。",
    "T47n1998A_008:0844b17_4": "邪正兩分。",
    "T47n1998A_008:0844b18_5": "正由鞭影。",
    "T47n1998A_008:0844b19_0": "示眾。",
    "T47n1998A_008:0844b19_1": "即心即佛莫妄求。",
    "T47n1998A_008:0844b19_2": "非心非佛休別討。",
    "T47n1998A_008:0844b19_3": "紅爐焰上雪華飛。",
    "T47n1998A_008:0844b20_4": "一點清涼除熱惱。",
    "T47n1998A_008:0844b21_0": "示眾。",
    "T47n1998A_008:0844b21_1": "行不到處說不難。",
    "T47n1998A_008:0844b21_2": "說不到處行不難。",
    "T47n1998A_008:0844b21_3": "行說難到不難到。",
    "T47n1998A_008:0844b22_4": "拈却門前大案山。",
    "T47n1998A_008:0844b22_5": "所以道。",
    "T47n1998A_008:0844b22_6": "靈鋒寶劍。",
    "T47n1998A_008:0844b23_7": "常露現前。",
    "T47n1998A_008:0844b23_8": "亦能殺人亦能活人。",
    "T47n1998A_008:0844b23_9": "進前則喪身失命。",
    "T47n1998A_008:0844b24_10": "退後則瓦解氷銷。",
    "T47n1998A_008:0844b24_11": "不進不退。",
    "T47n1998A_008:0844b24_12": "上無衝天之計。",
    "T47n1998A_008:0844b25_13": "下無入地之謀。",
    "T47n1998A_008:0844b25_14": "正當恁麼時。",
    "T47n1998A_008:0844b25_15": "作麼生是衲僧轉身一路。",
    "T47n1998A_008:0844b26_16": "還委悉麼。",
    "T47n1998A_008:0844b26_17": "好手手中呈好手。",
    "T47n1998A_008:0844b27_18": "紅心心裏中紅心。",
    "T47n1998A_008:0844b28_0": "示眾。",
    "T47n1998A_008:0844b28_1": "舉僧問趙州。",
    "T47n1998A_008:0844b28_2": "如何是趙州。",
    "T47n1998A_008:0844b28_3": "州云。",
    "T47n1998A_008:0844b28_4": "東門南門西門北門。",
    "T47n1998A_008:0844b29_5": "僧云。",
    "T47n1998A_008:0844b29_6": "不問這箇。",
    "T47n1998A_008:0844b29_7": "州云。",
    "T47n1998A_008:0844b29_8": "爾問趙州聻。",
    "T47n1998A_008:0844c01_9": "師云。",
    "T47n1998A_008:0844c01_10": "這僧問趙州。",
    "T47n1998A_008:0844c01_11": "趙州答趙州。",
    "T47n1998A_008:0844c01_12": "得人一馬還人一牛。",
    "T47n1998A_008:0844c02_13": "人平不語水平不流。",
    "T47n1998A_008:0844c02_14": "會麼。",
    "T47n1998A_008:0844c03_0": "受恩深處宜先退。",
    "T47n1998A_008:0844c03_1": "得意濃時便好休。",
    "T47n1998A_008:0844c04_0": "為圜悟和尚舉哀拈香。",
    "T47n1998A_008:0844c04_1": "指真云。",
    "T47n1998A_008:0844c04_2": "這老和尚。",
    "T47n1998A_008:0844c04_3": "一生多口攪擾叢林。",
    "T47n1998A_008:0844c05_4": "近聞已在蜀中遷化了也。",
    "T47n1998A_008:0844c06_0": "且喜天下太平。",
    "T47n1998A_008:0844c06_1": "雲門昔年雖曾親近。",
    "T47n1998A_008:0844c06_2": "要且不聞他說著箇元字脚。",
    "T47n1998A_008:0844c07_3": "所以今日作一分供養。",
    "T47n1998A_008:0844c08_0": "點一盞茶。",
    "T47n1998A_008:0844c08_1": "燒此一炷香。",
    "T47n1998A_008:0844c08_2": "熏他鼻孔。",
    "T47n1998A_008:0844c08_3": "即非報德酬恩。",
    "T47n1998A_008:0844c09_4": "只要辱他則箇。",
    "T47n1998A_008:0844c09_5": "召大眾。",
    "T47n1998A_008:0844c09_6": "云既不聞他說箇元字脚。",
    "T47n1998A_008:0844c10_7": "又無恩德可報。",
    "T47n1998A_008:0844c10_8": "何故特地作這一場笑具。",
    "T47n1998A_008:0844c11_9": "還委悉麼。",
    "T47n1998A_008:0844c11_10": "冤有頭債有主。",
    "T47n1998A_008:0844c11_11": "偶因失脚倒地。",
    "T47n1998A_008:0844c12_12": "至今怨入骨髓。",
    "T47n1998A_008:0844c12_13": "遂燒香。",
    "T47n1998A_008:0844c13_0": "當晚小參。",
    "T47n1998A_008:0844c13_1": "舉僧問長沙。",
    "T47n1998A_008:0844c13_2": "南泉遷化向甚麼處去。",
    "T47n1998A_008:0844c14_3": "沙云。",
    "T47n1998A_008:0844c14_4": "東家作驢西家作馬。",
    "T47n1998A_008:0844c14_5": "僧云。",
    "T47n1998A_008:0844c14_6": "未審意旨如何。",
    "T47n1998A_008:0844c15_7": "沙云。",
    "T47n1998A_008:0844c15_8": "要騎便騎要下便下。",
    "T47n1998A_008:0844c15_9": "師云。",
    "T47n1998A_008:0844c15_10": "今日或有人問雲門。",
    "T47n1998A_008:0844c16_11": "圜悟老師遷化向甚麼處去。",
    "T47n1998A_008:0844c16_12": "即向他道。",
    "T47n1998A_008:0844c17_13": "入阿鼻大地獄去也。",
    "T47n1998A_008:0844c17_14": "未審意旨如何。",
    "T47n1998A_008:0844c18_0": "飲洋銅汁吞熱鐵圓。",
    "T47n1998A_008:0844c18_1": "或問。",
    "T47n1998A_008:0844c18_2": "還救得也無。",
    "T47n1998A_008:0844c18_3": "云救不得。",
    "T47n1998A_008:0844c19_4": "為甚麼救不得。",
    "T47n1998A_008:0844c19_5": "是這老漢。",
    "T47n1998A_008:0844c19_6": "家常茶飯。",
    "T47n1998A_008:0844c20_0": "善友請示眾。",
    "T47n1998A_008:0844c20_1": "妄心顛倒造諸業。",
    "T47n1998A_008:0844c20_2": "回趣真乘即懺摩。",
    "T47n1998A_008:0844c21_3": "真妄兩頭俱透脫。",
    "T47n1998A_008:0844c21_4": "海南東畔是新羅。",
    "T47n1998A_008:0844c22_0": "示眾。",
    "T47n1998A_008:0844c22_1": "舉百丈凡參次。",
    "T47n1998A_008:0844c22_2": "有一老人。",
    "T47n1998A_008:0844c22_3": "常隨眾聽法。",
    "T47n1998A_008:0844c23_4": "眾人退老人亦退。",
    "T47n1998A_008:0844c23_5": "忽一日不退。",
    "T47n1998A_008:0844c23_6": "丈遂問。",
    "T47n1998A_008:0844c24_0": "面前立者復是何人。",
    "T47n1998A_008:0844c24_1": "老人云。",
    "T47n1998A_008:0844c24_2": "某甲非人也。",
    "T47n1998A_008:0844c24_3": "於過去迦葉佛時。",
    "T47n1998A_008:0844c25_4": "曾住此山。",
    "T47n1998A_008:0844c25_5": "因學人問。",
    "T47n1998A_008:0844c25_6": "大修行底人。",
    "T47n1998A_008:0844c26_7": "還落因果也無。",
    "T47n1998A_008:0844c26_8": "對云。",
    "T47n1998A_008:0844c26_9": "不落因果。",
    "T47n1998A_008:0844c26_10": "五百生墮野狐身。",
    "T47n1998A_008:0844c27_11": "今請和尚。",
    "T47n1998A_008:0844c27_12": "代一轉語。",
    "T47n1998A_008:0844c27_13": "貴脫野狐身。",
    "T47n1998A_008:0844c28_14": "老人遂問。",
    "T47n1998A_008:0844c28_15": "大修行底人。",
    "T47n1998A_008:0844c28_16": "還落因果也無。",
    "T47n1998A_008:0844c29_17": "丈云。",
    "T47n1998A_008:0844c29_18": "不昧因果。",
    "T47n1998A_008:0844c29_19": "老人於言下大悟。",
    "T47n1998A_008:0844c29_20": "便脫野狐身。",
    "T47n1998A_008:0845a01_21": "師云。",
    "T47n1998A_008:0845a01_22": "不落與不昧。",
    "T47n1998A_008:0845a01_23": "半明兼半晦。",
    "T47n1998A_008:0845a01_24": "不昧與不落。",
    "T47n1998A_008:0845a02_25": "兩頭空索索。",
    "T47n1998A_008:0845a02_26": "五百生前箇野狐。",
    "T47n1998A_008:0845a02_27": "而今冷地謾追呼。",
    "T47n1998A_008:0845a03_28": "喝一喝云。",
    "T47n1998A_008:0845a03_29": "座中既有江南客。",
    "T47n1998A_008:0845a04_0": "休向罇前唱鷓鴣。",
    "T47n1998A_008:0845a05_0": "示眾。",
    "T47n1998A_008:0845a05_1": "舉道吾與漸源。",
    "T47n1998A_008:0845a05_2": "至一家弔慰。",
    "T47n1998A_008:0845a05_3": "源拊棺云。",
    "T47n1998A_008:0845a06_0": "生耶死耶。",
    "T47n1998A_008:0845a06_1": "吾云。",
    "T47n1998A_008:0845a06_2": "生也不道。",
    "T47n1998A_008:0845a06_3": "死也不道。",
    "T47n1998A_008:0845a06_4": "源云。",
    "T47n1998A_008:0845a07_0": "為甚麼不道。",
    "T47n1998A_008:0845a07_1": "吾云。",
    "T47n1998A_008:0845a07_2": "不道不道。",
    "T47n1998A_008:0845a07_3": "回至中路。",
    "T47n1998A_008:0845a07_4": "源云。",
    "T47n1998A_008:0845a08_5": "和尚快與某甲道。",
    "T47n1998A_008:0845a08_6": "若不道打和尚去。",
    "T47n1998A_008:0845a08_7": "吾云。",
    "T47n1998A_008:0845a09_8": "打即任打。",
    "T47n1998A_008:0845a09_9": "道即不道。",
    "T47n1998A_008:0845a09_10": "師云。",
    "T47n1998A_008:0845a09_11": "生也不道死也不道。",
    "T47n1998A_008:0845a10_12": "公案兩重一狀領到。",
    "T47n1998A_008:0845a10_13": "露刃吹毛截斷綱要。",
    "T47n1998A_008:0845a11_14": "脫却鶻臭衫。",
    "T47n1998A_008:0845a11_15": "拈了炙脂帽。",
    "T47n1998A_008:0845a11_16": "大坐當軒氣浩浩。",
    "T47n1998A_008:0845a12_17": "喝一喝。",
    "T47n1998A_008:0845a12_18": "下座。",
    "T47n1998A_008:0845a13_0": "施主供養羅漢示眾。",
    "T47n1998A_008:0845a13_1": "丹霞燒却木佛。",
    "T47n1998A_008:0845a13_2": "翠微供養羅漢。",
    "T47n1998A_008:0845a14_3": "一人左手擡。",
    "T47n1998A_008:0845a14_4": "一人右手按。",
    "T47n1998A_008:0845a14_5": "賓主既歷然。",
    "T47n1998A_008:0845a15_6": "吾道一以貫。",
    "T47n1998A_008:0845a15_7": "師子獨游行。",
    "T47n1998A_008:0845a15_8": "豈復求侶伴。",
    "T47n1998A_008:0845a15_9": "團圞擘不開。",
    "T47n1998A_008:0845a16_10": "打鼓普請看。",
    "T47n1998A_008:0845a16_11": "雖不直分文。",
    "T47n1998A_008:0845a16_12": "傾國不肯換。",
    "T47n1998A_008:0845a17_13": "遂鳴指三下云。",
    "T47n1998A_008:0845a17_14": "蘇盧[口*悉]哩薩婆訶。",
    "T47n1998A_008:0845a18_0": "端午示眾。",
    "T47n1998A_008:0845a18_1": "拈拄杖舉雲門大師道。",
    "T47n1998A_008:0845a18_2": "從上諸聖。",
    "T47n1998A_008:0845a19_0": "為甚麼不到這裏。",
    "T47n1998A_008:0845a19_1": "蓮華峯菴主道。",
    "T47n1998A_008:0845a19_2": "古人到這裏。",
    "T47n1998A_008:0845a20_3": "為甚麼不肯住。",
    "T47n1998A_008:0845a20_4": "師云。",
    "T47n1998A_008:0845a20_5": "二尊宿。",
    "T47n1998A_008:0845a20_6": "折東籬補西壁。",
    "T47n1998A_008:0845a21_7": "抱橋柱澡洗。",
    "T47n1998A_008:0845a21_8": "把纜放船即不無。",
    "T47n1998A_008:0845a21_9": "要且無為人底道理。",
    "T47n1998A_008:0845a22_10": "雲門即不然。",
    "T47n1998A_008:0845a22_11": "未到這裏教伊到。",
    "T47n1998A_008:0845a23_0": "已到這裏教伊頭破腦裂。",
    "T47n1998A_008:0845a23_1": "且道。",
    "T47n1998A_008:0845a23_2": "還有為人處也無。",
    "T47n1998A_008:0845a24_3": "良久云。",
    "T47n1998A_008:0845a24_4": "一二三四五。",
    "T47n1998A_008:0845a24_5": "虛空闕處補。",
    "T47n1998A_008:0845a24_6": "五四三二一。",
    "T47n1998A_008:0845a25_7": "當門書大吉。",
    "T47n1998A_008:0845a25_8": "好手揮斤去。",
    "T47n1998A_008:0845a25_9": "鼻泥。",
    "T47n1998A_008:0845a25_10": "衲僧機妙安能識。",
    "T47n1998A_008:0845a26_11": "驀然識百草頭邊露消息。",
    "T47n1998A_008:0845a26_12": "且作麼生是露底消息。",
    "T47n1998A_008:0845a27_13": "唵部臨唵齒臨。",
    "T47n1998A_008:0845a27_14": "急急如律令。",
    "T47n1998A_008:0845a28_15": "卓一下。",
    "T47n1998A_008:0845a29_0": "示眾。",
    "T47n1998A_008:0845a29_1": "舉僧問睦州。",
    "T47n1998A_008:0845a29_2": "一言道盡時如何。",
    "T47n1998A_008:0845a29_3": "州云。",
    "T47n1998A_008:0845a29_4": "老僧在爾鉢囊裏。",
    "T47n1998A_008:0845b01_5": "又問雲門。",
    "T47n1998A_008:0845b01_6": "一言道盡時如何。",
    "T47n1998A_008:0845b02_0": "門云。",
    "T47n1998A_008:0845b02_1": "裂破。",
    "T47n1998A_008:0845b02_2": "師云。",
    "T47n1998A_008:0845b02_3": "或有人問山僧。",
    "T47n1998A_008:0845b02_4": "一言道盡時如何。",
    "T47n1998A_008:0845b03_5": "這漆桶。",
    "T47n1998A_008:0845b04_0": "示眾。",
    "T47n1998A_008:0845b04_1": "舉僧問雲門。",
    "T47n1998A_008:0845b04_2": "達磨九年面壁。",
    "T47n1998A_008:0845b04_3": "意旨如何。",
    "T47n1998A_008:0845b05_0": "門云。",
    "T47n1998A_008:0845b05_1": "念七。",
    "T47n1998A_008:0845b05_2": "師云。",
    "T47n1998A_008:0845b05_3": "念七念七。",
    "T47n1998A_008:0845b05_4": "全無消息。",
    "T47n1998A_008:0845b05_5": "背看分明。",
    "T47n1998A_008:0845b06_6": "正觀難識。",
    "T47n1998A_008:0845b06_7": "既是正觀。",
    "T47n1998A_008:0845b06_8": "為甚麼難識。",
    "T47n1998A_008:0845b06_9": "可知禮也。",
    "T47n1998A_008:0845b08_0": "示眾。",
    "T47n1998A_008:0845b08_1": "舉龐居士問馬大師。",
    "T47n1998A_008:0845b08_2": "不昧本來身。",
    "T47n1998A_008:0845b08_3": "請師高著眼。",
    "T47n1998A_008:0845b09_4": "大師直下覷。",
    "T47n1998A_008:0845b09_5": "士云。",
    "T47n1998A_008:0845b09_6": "一種沒絃琴。",
    "T47n1998A_008:0845b09_7": "唯師彈得妙。",
    "T47n1998A_008:0845b10_8": "大師直上覷。",
    "T47n1998A_008:0845b10_9": "居士禮拜。",
    "T47n1998A_008:0845b10_10": "大師歸方丈。",
    "T47n1998A_008:0845b11_11": "居士隨後至方丈云。",
    "T47n1998A_008:0845b11_12": "適來弄巧成拙。",
    "T47n1998A_008:0845b11_13": "師云。",
    "T47n1998A_008:0845b12_0": "且道。",
    "T47n1998A_008:0845b12_1": "是馬大師弄巧成拙。",
    "T47n1998A_008:0845b12_2": "龐居士弄巧成拙。",
    "T47n1998A_008:0845b13_0": "還有緇素得出者麼。",
    "T47n1998A_008:0845b13_1": "若緇素不出。",
    "T47n1998A_008:0845b13_2": "癩馬繫枯樁。",
    "T47n1998A_008:0845b14_3": "直饒緇素得出。",
    "T47n1998A_008:0845b14_4": "也是蝦蟆口裏一粒椒。",
    "T47n1998A_008:0845b15_0": "示眾。",
    "T47n1998A_008:0845b15_1": "舉龐居士云。",
    "T47n1998A_008:0845b15_2": "心如境亦如。",
    "T47n1998A_008:0845b15_3": "無實亦無虛。",
    "T47n1998A_008:0845b16_0": "有亦不管。",
    "T47n1998A_008:0845b16_1": "無亦不拘。",
    "T47n1998A_008:0845b16_2": "不是聖賢了事凡夫。",
    "T47n1998A_008:0845b16_3": "師云。",
    "T47n1998A_008:0845b17_4": "白的的清寥寥。",
    "T47n1998A_008:0845b17_5": "水不能濡火不能燒。",
    "T47n1998A_008:0845b17_6": "是箇甚麼。",
    "T47n1998A_008:0845b18_7": "切不得問著。",
    "T47n1998A_008:0845b18_8": "問著則瞎却爾眼。",
    "T47n1998A_008:0845b18_9": "以拄杖擊香臺一下。",
    "T47n1998A_008:0845b20_0": "示眾。",
    "T47n1998A_008:0845b20_1": "舉古德云。",
    "T47n1998A_008:0845b20_2": "佛法也大有。",
    "T47n1998A_008:0845b20_3": "只是舌頭短。",
    "T47n1998A_008:0845b20_4": "師云。",
    "T47n1998A_008:0845b21_5": "向道莫行山下路。",
    "T47n1998A_008:0845b21_6": "果聞猿叫斷腸聲。",
    "T47n1998A_008:0845b22_0": "蔡春卿薦考請示眾。",
    "T47n1998A_008:0845b22_1": "舉洛浦示眾云。",
    "T47n1998A_008:0845b22_2": "孫臏收鋪去也。",
    "T47n1998A_008:0845b23_3": "有卜者出來。",
    "T47n1998A_008:0845b23_4": "時有僧出曰。",
    "T47n1998A_008:0845b23_5": "請和尚一卜。",
    "T47n1998A_008:0845b24_6": "浦云。",
    "T47n1998A_008:0845b24_7": "汝家爺死。",
    "T47n1998A_008:0845b24_8": "僧無語。",
    "T47n1998A_008:0845b24_9": "法眼代拊掌三下。",
    "T47n1998A_008:0845b25_10": "師云。",
    "T47n1998A_008:0845b25_11": "這僧沒興死却爺。",
    "T47n1998A_008:0845b25_12": "又被他人拊掌。",
    "T47n1998A_008:0845b25_13": "信知禍不單行。",
    "T47n1998A_008:0845b26_14": "福無雙至。",
    "T47n1998A_008:0845b26_15": "然洛浦善卜。",
    "T47n1998A_008:0845b26_16": "法眼善斷。",
    "T47n1998A_008:0845b27_17": "若子細思量。",
    "T47n1998A_008:0845b27_18": "爻象吉凶。",
    "T47n1998A_008:0845b27_19": "二老一時漏逗。",
    "T47n1998A_008:0845b28_20": "既占得火風鼎卦。",
    "T47n1998A_008:0845b28_21": "何故斷作地火明夷。",
    "T47n1998A_008:0845b28_22": "雲門即不然。",
    "T47n1998A_008:0845b29_23": "驀拈拄杖云。",
    "T47n1998A_008:0845b29_24": "孫臏門下死却郎罷。",
    "T47n1998A_008:0845c01_25": "連卓三下云。",
    "T47n1998A_008:0845c01_26": "會麼。",
    "T47n1998A_008:0845c01_27": "內屬艮宮。",
    "T47n1998A_008:0845c01_28": "再求外象。",
    "T47n1998A_008:0845c02_0": "又卓三下云。",
    "T47n1998A_008:0845c02_1": "千靈萬聖。",
    "T47n1998A_008:0845c02_2": "萬聖千靈。",
    "T47n1998A_008:0845c02_3": "莫順人情。",
    "T47n1998A_008:0845c03_0": "復卓一下云。",
    "T47n1998A_008:0845c03_1": "吉凶上卦。",
    "T47n1998A_008:0845c04_0": "屏山居士劉寶學請示眾。",
    "T47n1998A_008:0845c04_1": "大根大器大丈夫。",
    "T47n1998A_008:0845c05_0": "不越一念了大事。",
    "T47n1998A_008:0845c05_1": "三世諸佛立下風。",
    "T47n1998A_008:0845c05_2": "此人堪作如來使。",
    "T47n1998A_008:0845c06_3": "三世諸佛既立下風。",
    "T47n1998A_008:0845c06_4": "為甚麼却作如來使。",
    "T47n1998A_008:0845c07_5": "良久云。",
    "T47n1998A_008:0845c07_6": "鐵輪天子寰中勅。",
    "T47n1998A_008:0845c07_7": "須信官差不自由。",
    "T47n1998A_008:0845c09_0": "江給事請開佛光明。",
    "T47n1998A_008:0845c09_1": "師執筆云。",
    "T47n1998A_008:0845c09_2": "教中道。",
    "T47n1998A_008:0845c09_3": "清淨慈門剎塵數。",
    "T47n1998A_008:0845c10_4": "共生如來一妙相。",
    "T47n1998A_008:0845c10_5": "一一諸相莫不然。",
    "T47n1998A_008:0845c11_6": "是故見者無厭足。",
    "T47n1998A_008:0845c11_7": "又道。",
    "T47n1998A_008:0845c11_8": "如來眼有大人相。",
    "T47n1998A_008:0845c12_9": "名自在普見雲。",
    "T47n1998A_008:0845c12_10": "以眾妙寶而為莊嚴。",
    "T47n1998A_008:0845c12_11": "摩尼寶光清淨瑩徹。",
    "T47n1998A_008:0845c13_12": "普見一切皆無障礙。",
    "T47n1998A_008:0845c13_13": "既然如是。",
    "T47n1998A_008:0845c14_14": "為甚麼却要他人點眼。",
    "T47n1998A_008:0845c14_15": "還有道得底麼。",
    "T47n1998A_008:0845c14_16": "若也道得。",
    "T47n1998A_008:0845c15_17": "非獨為黃面老子出氣。",
    "T47n1998A_008:0845c15_18": "亦使遍法界眾生悉沾利益。",
    "T47n1998A_008:0845c16_19": "若道不得。",
    "T47n1998A_008:0845c16_20": "聽取一頌。",
    "T47n1998A_008:0845c16_21": "舉頭忽覩明星現。",
    "T47n1998A_008:0845c17_22": "因茲眼病見空華。",
    "T47n1998A_008:0845c17_23": "遂以筆點云。",
    "T47n1998A_008:0845c18_0": "今日還渠舊光彩。",
    "T47n1998A_008:0845c18_1": "碧眸炯炯照塵沙。",
    "T47n1998A_008:0845c19_0": "泉州小谿雲門菴語錄卷第八"
}