[
    {
        "source_sentence": "道安法師念佛讚",
        "from": "T85n2830A_001:1268b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□十三天佛最尊　　萬物中貴不過人",
        "from": "T85n2830A_001:1268b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一世眼□□□□　　妙□相勸入善門",
        "from": "T85n2830A_001:1268b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只恐眾生造諸惡　　經律法教□修身",
        "from": "T85n2830A_001:1268b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉眾生短命保　　緣佛慈悲徵諫君",
        "from": "T85n2830A_001:1268c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫道□□□□□　　善惡童子每知聞",
        "from": "T85n2830A_001:1268c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好事惡事□□□　　□□□□□□□",
        "from": "T85n2830A_001:1268c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造惡人多修福少　　所以眾生長受貧",
        "from": "T85n2830A_001:1268c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天堂快樂無人去　　地獄苦處競來莽",
        "from": "T85n2830A_001:1268c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是閻羅王倉入　　亦不是諸佛不慈悲",
        "from": "T85n2830A_001:1268c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總緣慳貪難勸諫　　百劫千生自□身",
        "from": "T85n2830A_001:1268c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一當官莫誑法　　恃恃形勢乃欺貪",
        "from": "T85n2830A_001:1268c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蠢動眾生皆惜命　　負骨埋身不放□",
        "from": "T85n2830A_001:1268c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡加遭誑橫事　　法外綾遲不敢嗔",
        "from": "T85n2830A_001:1268c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狂取一錢徵萬倍　　命終地獄受艱辛",
        "from": "T85n2830A_001:1268c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴前生希施得　　貧是慳貪宿業因",
        "from": "T85n2830A_001:1268c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人無慈好酒肉　　百味調和勸六親",
        "from": "T85n2830A_001:1268c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但著猪羊被宰殺　　苦痛之聲上帝聞",
        "from": "T85n2830A_001:1268c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼光早已隨身落　　四脚高低就血盆",
        "from": "T85n2830A_001:1268c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將知食肉屠他命　　地獄恐讐不可論",
        "from": "T85n2830A_001:1268c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累月不曾得一類　　終日虛霑喫肉人",
        "from": "T85n2830A_001:1268c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死生猶來美生處　　若箇不覓命長存",
        "from": "T85n2830A_001:1268c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪迴六道受諸類　　改頭換面不相知",
        "from": "T85n2830A_001:1268c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但取眾生血肉喫　　誰知父母及妻兒",
        "from": "T85n2830A_001:1268c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切猪羊皆惜命　　惜命叫喚口中悲",
        "from": "T85n2830A_001:1268c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣業力劣負他命　　百劫千生不放衣",
        "from": "T85n2830A_001:1268c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡皆將業鏡照　　寸步驅逐入阿鼻",
        "from": "T85n2830A_001:1268c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普勸眾生修萬行　　今逢法教莫生疑",
        "from": "T85n2830A_001:1268c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定至心聞妙法　　當來極樂佛為期",
        "from": "T85n2830A_001:1268c25_0",
        "context_with_next_sentence": true
    }
]