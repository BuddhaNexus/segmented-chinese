[
    {
        "source_sentence": "虛空藏菩薩能滿諸願最勝心陀",
        "from": "T20n1145_001:0601c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅尼求聞持法",
        "from": "T20n1145_001:0601c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　出金剛頂經成就一切義品",
        "from": "T20n1145_001:0601c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐中印度三藏善無畏奉　制譯爾時薄伽梵。",
        "from": "T20n1145_001:0601c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入諸波羅蜜平等性三摩地。",
        "from": "T20n1145_001:0601c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從定起已即說此能滿諸願虛空藏菩薩最勝心陀羅尼曰。",
        "from": "T20n1145_001:0601c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南牟一阿迦去引捨舒可反二揭魚羯反婆去引耶余可反三唵四阿唎五迦入麼唎六慕唎七莎嚩訶八薄伽梵言。",
        "from": "T20n1145_001:0601c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼。",
        "from": "T20n1145_001:0601c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是過去現在一切諸佛之所同說。",
        "from": "T20n1145_001:0601c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能常誦此陀羅尼者。",
        "from": "T20n1145_001:0601c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無始來五無間等一切罪障悉皆銷滅。",
        "from": "T20n1145_001:0601c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得一切諸佛菩薩共所護念。",
        "from": "T20n1145_001:0601c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未成佛來。",
        "from": "T20n1145_001:0601c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處。",
        "from": "T20n1145_001:0601c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏菩薩恒隨守護。",
        "from": "T20n1145_001:0601c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸有情常所樂見。",
        "from": "T20n1145_001:0601c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有善願無不滿足。",
        "from": "T20n1145_001:0601c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切苦患皆悉銷除。",
        "from": "T20n1145_001:0601c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常生人天不墮惡趣。",
        "from": "T20n1145_001:0601c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生之處常憶宿命。",
        "from": "T20n1145_001:0601c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設不加法但能常誦獲福如是。",
        "from": "T20n1145_001:0601c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲加法持此陀羅尼求聞持者。",
        "from": "T20n1145_001:0601c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於絹素白㲲或淨板上。",
        "from": "T20n1145_001:0601c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先畫滿月。",
        "from": "T20n1145_001:0601c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中畫虛空藏菩薩像。",
        "from": "T20n1145_001:0601c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其量下至不減一肘。",
        "from": "T20n1145_001:0601c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復過此任其力辦。",
        "from": "T20n1145_001:0601c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩滿月增減相稱。",
        "from": "T20n1145_001:0602a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身作金色。",
        "from": "T20n1145_001:0602a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶蓮華上半加而坐。",
        "from": "T20n1145_001:0602a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右壓左。",
        "from": "T20n1145_001:0602a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "容顏殊妙作熙怡喜悅之相。",
        "from": "T20n1145_001:0602a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於寶冠上有五佛像。",
        "from": "T20n1145_001:0602a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結加趺坐。",
        "from": "T20n1145_001:0602a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩左手執白蓮華。",
        "from": "T20n1145_001:0602a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微作紅色。",
        "from": "T20n1145_001:0602a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於華臺上有如意寶珠。",
        "from": "T20n1145_001:0602a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吠琉璃色黃光發焰。",
        "from": "T20n1145_001:0602a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手復作與諸願印。",
        "from": "T20n1145_001:0602a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五指垂下現掌向外。",
        "from": "T20n1145_001:0602a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是與願印相。",
        "from": "T20n1145_001:0602a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫像了已。",
        "from": "T20n1145_001:0602a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於空閑寂靜之處。",
        "from": "T20n1145_001:0602a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在淨室塔廟山頂樹下。",
        "from": "T20n1145_001:0602a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨在一處安置其像。",
        "from": "T20n1145_001:0602a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面正向西或容向北。",
        "from": "T20n1145_001:0602a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨物覆之。",
        "from": "T20n1145_001:0602a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別作一方木曼茶羅下。",
        "from": "T20n1145_001:0602a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至一肘過此亦任。",
        "from": "T20n1145_001:0602a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其壇下安四足。",
        "from": "T20n1145_001:0602a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以編附。",
        "from": "T20n1145_001:0602a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上面去地恰須四指。",
        "from": "T20n1145_001:0602a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其板若用檀沈作者最為殊勝。",
        "from": "T20n1145_001:0602a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不爾或以柏等有香之木為之亦得。",
        "from": "T20n1145_001:0602a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法作已置於像前。",
        "from": "T20n1145_001:0602a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應嚴辦五種供具。",
        "from": "T20n1145_001:0602a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂塗香諸華燒香飲食燈明。",
        "from": "T20n1145_001:0602a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香者磨白檀為之。",
        "from": "T20n1145_001:0602a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華以隨時藥草所生者充。",
        "from": "T20n1145_001:0602a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無時華當以粳米。",
        "from": "T20n1145_001:0602a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或燒蕎麥或取橘柏等葉。",
        "from": "T20n1145_001:0602a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或用丁香以充華用。",
        "from": "T20n1145_001:0602a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香但以沈檀龍腦隨應用之。",
        "from": "T20n1145_001:0602a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食除薰穢每須新淨。",
        "from": "T20n1145_001:0602a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈用牛酥油亦通許。",
        "from": "T20n1145_001:0602a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當欲具辦此物之時。",
        "from": "T20n1145_001:0602a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必須晨朝盥洗手面護淨如法。",
        "from": "T20n1145_001:0602a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具辦足已。",
        "from": "T20n1145_001:0602a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置在壇邊。",
        "from": "T20n1145_001:0602a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後出外。",
        "from": "T20n1145_001:0602a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以淨水重洗手已。",
        "from": "T20n1145_001:0602a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即作手印掌承淨水。",
        "from": "T20n1145_001:0602a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼三遍便即飲之。",
        "from": "T20n1145_001:0602a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其手印相。",
        "from": "T20n1145_001:0602a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先仰舒右手五指。",
        "from": "T20n1145_001:0602a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈其頭指與大母指相捻。",
        "from": "T20n1145_001:0602a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀如捻香。",
        "from": "T20n1145_001:0602a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是虛空藏菩薩如意寶珠成辦一切事印。",
        "from": "T20n1145_001:0602a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以此印如前承水。",
        "from": "T20n1145_001:0602a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼三遍竟已。",
        "from": "T20n1145_001:0602a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑頂及身。",
        "from": "T20n1145_001:0602a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即令內外一切清淨。",
        "from": "T20n1145_001:0602a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應往詣像所。",
        "from": "T20n1145_001:0602a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心禮拜面向菩薩半跏而坐。",
        "from": "T20n1145_001:0602a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉去像上所覆之物。",
        "from": "T20n1145_001:0602a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次即須作護身手印。",
        "from": "T20n1145_001:0602a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其手印相。",
        "from": "T20n1145_001:0602a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先舉右手。",
        "from": "T20n1145_001:0602a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後以頭指與大母指相捻。",
        "from": "T20n1145_001:0602a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀若捻香。",
        "from": "T20n1145_001:0602a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其頭指屈第二節。",
        "from": "T20n1145_001:0602a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其第一節極令端直。",
        "from": "T20n1145_001:0602b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方始印相。",
        "from": "T20n1145_001:0602b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法作此印已。",
        "from": "T20n1145_001:0602b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於頂上誦陀羅尼一遍。",
        "from": "T20n1145_001:0602b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次置右肩復誦一遍。",
        "from": "T20n1145_001:0602b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左肩心喉亦皆如是。",
        "from": "T20n1145_001:0602b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此護身法已。",
        "from": "T20n1145_001:0602b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛及虛空藏菩薩。",
        "from": "T20n1145_001:0602b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝受此人。",
        "from": "T20n1145_001:0602b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪障即皆銷滅。",
        "from": "T20n1145_001:0602b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心清淨福慧增長。",
        "from": "T20n1145_001:0602b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸魔及毘那夜迦皆不得便。",
        "from": "T20n1145_001:0602b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作前印掌承淨水。",
        "from": "T20n1145_001:0602b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼一遍。",
        "from": "T20n1145_001:0602b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑塗香等諸供養物并壇及近壇之地。",
        "from": "T20n1145_001:0602b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復如前作護身手印。",
        "from": "T20n1145_001:0602b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置塗香上誦陀羅尼一遍。",
        "from": "T20n1145_001:0602b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘華香等乃至木壇。",
        "from": "T20n1145_001:0602b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各皆如是作此法已。",
        "from": "T20n1145_001:0602b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華香等物即便清淨。",
        "from": "T20n1145_001:0602b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作護身手印右轉三匝。",
        "from": "T20n1145_001:0602b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼指上下。",
        "from": "T20n1145_001:0602b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但運其印身不動搖誦陀羅尼七遍。",
        "from": "T20n1145_001:0602b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其自心遠近分劑。",
        "from": "T20n1145_001:0602b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結十方界。",
        "from": "T20n1145_001:0602b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應閉目思惟。",
        "from": "T20n1145_001:0602b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏菩薩真身即與此像等無有異。",
        "from": "T20n1145_001:0602b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復用護身印作意。",
        "from": "T20n1145_001:0602b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請虛空藏菩薩。",
        "from": "T20n1145_001:0602b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼二十五遍已。",
        "from": "T20n1145_001:0602b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即舉大母指向裏招一度。",
        "from": "T20n1145_001:0602b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指如舊。",
        "from": "T20n1145_001:0602b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作此印誦陀羅尼三遍。",
        "from": "T20n1145_001:0602b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "㡧上蓮華以之為座。",
        "from": "T20n1145_001:0602b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想菩薩來坐此華。",
        "from": "T20n1145_001:0602b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便開目見菩薩已。",
        "from": "T20n1145_001:0602b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生希有心作真身解。",
        "from": "T20n1145_001:0602b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又誦三遍手印如前作是念言。",
        "from": "T20n1145_001:0602b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今者菩薩來至於此。",
        "from": "T20n1145_001:0602b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼力非我所能。",
        "from": "T20n1145_001:0602b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願尊者暫住於此。",
        "from": "T20n1145_001:0602b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次取塗香誦陀羅尼一遍。",
        "from": "T20n1145_001:0602b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用塗其壇。",
        "from": "T20n1145_001:0602b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復取華亦誦一遍布散壇上。",
        "from": "T20n1145_001:0602b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香飲食燈明次第取之。",
        "from": "T20n1145_001:0602b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆誦一遍手持供養。",
        "from": "T20n1145_001:0602b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置在壇邊復作念言。",
        "from": "T20n1145_001:0602b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛菩薩福慧熏修所生。",
        "from": "T20n1145_001:0602b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幡蓋清淨香華眾寶之具。",
        "from": "T20n1145_001:0602b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆嚴好。",
        "from": "T20n1145_001:0602b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作手印誦陀羅尼一遍。",
        "from": "T20n1145_001:0602b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前想念。",
        "from": "T20n1145_001:0602b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸供養物悉得成辦。",
        "from": "T20n1145_001:0602b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即持供養一切如來及諸菩薩。",
        "from": "T20n1145_001:0602b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是運心供養中最。",
        "from": "T20n1145_001:0602b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其不能辦塗香等供養之物。",
        "from": "T20n1145_001:0602b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但作第二運心供養。",
        "from": "T20n1145_001:0602b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法亦成就。",
        "from": "T20n1145_001:0602b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以手印掐珠。",
        "from": "T20n1145_001:0602b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼明記遍數。",
        "from": "T20n1145_001:0602c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦時閉目。",
        "from": "T20n1145_001:0602c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想菩薩心上有一滿月。",
        "from": "T20n1145_001:0602c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然所誦陀羅尼字。",
        "from": "T20n1145_001:0602c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現滿月中皆作金色。",
        "from": "T20n1145_001:0602c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字復從滿月流出。",
        "from": "T20n1145_001:0602c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澍行人頂。",
        "from": "T20n1145_001:0602c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復從口出入菩薩足如自發言諮啟菩薩足下。",
        "from": "T20n1145_001:0602c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼未止息來。",
        "from": "T20n1145_001:0602c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所想之字巡環往來。",
        "from": "T20n1145_001:0602c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相續不絕如輪而轉。",
        "from": "T20n1145_001:0602c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心若惓即須止息。",
        "from": "T20n1145_001:0602c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至誠瞻仰便坐禮拜。",
        "from": "T20n1145_001:0602c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉目復觀滿月菩薩。",
        "from": "T20n1145_001:0602c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極明了已。",
        "from": "T20n1145_001:0602c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應更運心令漸增長周遍法界。",
        "from": "T20n1145_001:0602c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復漸略觀。",
        "from": "T20n1145_001:0602c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於最後時量如本已。",
        "from": "T20n1145_001:0602c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方始出觀。",
        "from": "T20n1145_001:0602c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作前手印誦陀羅尼三遍已。",
        "from": "T20n1145_001:0602c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉大母指發遣菩薩。",
        "from": "T20n1145_001:0602c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是念言唯願慈悲布施歡喜。",
        "from": "T20n1145_001:0602c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後會法事復垂降赴。",
        "from": "T20n1145_001:0602c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是誦陀羅尼。",
        "from": "T20n1145_001:0602c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其力能或一日一上。",
        "from": "T20n1145_001:0602c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一日兩上。",
        "from": "T20n1145_001:0602c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從始至終每如初日。",
        "from": "T20n1145_001:0602c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍數多少亦如初上。",
        "from": "T20n1145_001:0602c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得增減。",
        "from": "T20n1145_001:0602c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後通計滿百萬遍。",
        "from": "T20n1145_001:0602c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其數乃終亦無時限。",
        "from": "T20n1145_001:0602c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然於中間不容間闕。",
        "from": "T20n1145_001:0602c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後於日蝕或月蝕時。",
        "from": "T20n1145_001:0602c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力捨施飲食財物。",
        "from": "T20n1145_001:0602c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養三寶。",
        "from": "T20n1145_001:0602c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即移菩薩及壇露地淨處。",
        "from": "T20n1145_001:0602c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置。",
        "from": "T20n1145_001:0602c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復取牛酥一兩。",
        "from": "T20n1145_001:0602c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛貯熟銅器中。",
        "from": "T20n1145_001:0602c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并取有乳樹葉七枚及枝一條。",
        "from": "T20n1145_001:0602c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置在壇邊。",
        "from": "T20n1145_001:0602c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華香等物加常數倍。",
        "from": "T20n1145_001:0602c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養之法一一同前。",
        "from": "T20n1145_001:0602c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養畢已。",
        "from": "T20n1145_001:0602c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取前樹葉重布壇中。",
        "from": "T20n1145_001:0602c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於葉上安置酥器。",
        "from": "T20n1145_001:0602c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還作手印誦陀羅尼三遍。",
        "from": "T20n1145_001:0602c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護持此酥。",
        "from": "T20n1145_001:0602c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以樹枝攪酥。",
        "from": "T20n1145_001:0602c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿停其手。",
        "from": "T20n1145_001:0602c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目觀日月兼亦看酥。",
        "from": "T20n1145_001:0602c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼無限遍數。",
        "from": "T20n1145_001:0602c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初蝕後退未圓已來。",
        "from": "T20n1145_001:0602c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其酥即有三種相現。",
        "from": "T20n1145_001:0602c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者氣。",
        "from": "T20n1145_001:0602c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者煙。",
        "from": "T20n1145_001:0602c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者火。",
        "from": "T20n1145_001:0602c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下中上三品相中。",
        "from": "T20n1145_001:0602c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨得一種法即成就。",
        "from": "T20n1145_001:0602c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此相已便成神藥。",
        "from": "T20n1145_001:0602c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若食此藥即獲聞持。",
        "from": "T20n1145_001:0602c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一經耳目文義俱解。",
        "from": "T20n1145_001:0602c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記之於心永無遺忘。",
        "from": "T20n1145_001:0602c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸餘福利無量無邊。",
        "from": "T20n1145_001:0602c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今且略說少分功德。",
        "from": "T20n1145_001:0602c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如至却退圓滿已來。",
        "from": "T20n1145_001:0602c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三相若無法不成就。",
        "from": "T20n1145_001:0603a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應更從初首而作。",
        "from": "T20n1145_001:0603a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至七遍。",
        "from": "T20n1145_001:0603a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱有五逆等極重罪障。",
        "from": "T20n1145_001:0603a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦皆銷滅法定成就。",
        "from": "T20n1145_001:0603a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏菩薩能滿諸願最勝心陀羅尼求聞持法",
        "from": "T20n1145_001:0603a04_100",
        "context_with_next_sentence": false
    }
]