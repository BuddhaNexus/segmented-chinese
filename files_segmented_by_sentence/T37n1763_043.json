[
    {
        "source_sentence": "8大般涅槃經集解卷第四十三",
        "from": "T37n1763_043:0511c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　耆婆勸闍世王詣佛　廣說雜緣起事",
        "from": "T37n1763_043:0511c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　出頻婆娑羅於空中勸闍世事",
        "from": "T37n1763_043:0511c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　釋月愛三昧義　為闡提作一柱殿義梵行品之第八王今且聽！",
        "from": "T37n1763_043:0511c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因至所有重罪必當得除。",
        "from": "T37n1763_043:0511c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0511c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔未說治罪人有驗，今出所治之人為證。",
        "from": "T37n1763_043:0511c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王且聽！",
        "from": "T37n1763_043:0511c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有婆羅門子至為無上醫非六師也。",
        "from": "T37n1763_043:0511c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0511c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鴦崛摩羅，此言指鬘也。",
        "from": "T37n1763_043:0511c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_043:0511c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有須毘羅王子至為無上醫非六師也。",
        "from": "T37n1763_043:0511c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0511c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔有慳貪，今日渴飢。",
        "from": "T37n1763_043:0511c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞說其過，心生慚悔，見水得飲。",
        "from": "T37n1763_043:0511c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_043:0511c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍婆提國群賊五百至為大良醫非六師也。",
        "from": "T37n1763_043:0511c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案智秀曰：",
        "from": "T37n1763_043:0511c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四廣出諸蒙益之事，明佛有道力，能曠益無窮也。",
        "from": "T37n1763_043:0512a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_043:0512a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能信臣語者至若不見信願善思之。",
        "from": "T37n1763_043:0512a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案寶亮曰：",
        "from": "T37n1763_043:0512a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上至此，第六引現事為證。",
        "from": "T37n1763_043:0512a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自佛出世至今，有犯罪而見佛者，無不除滅，云何王罪獨不滅耶？",
        "from": "T37n1763_043:0512a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_043:0512a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛世尊大悲普䨱至亦當視佛如父母想。",
        "from": "T37n1763_043:0512a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐王思惟，不敢求佛。",
        "from": "T37n1763_043:0512a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說大悲怨親平等，廣出等事也。",
        "from": "T37n1763_043:0512a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_043:0512a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四廣引證，以勸王行。",
        "from": "T37n1763_043:0512a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王，當知如來不但至發阿耨多羅三藐三菩提心。",
        "from": "T37n1763_043:0512a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_043:0512a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五明佛普覆，不限一人也。",
        "from": "T37n1763_043:0512a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_043:0512a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七，明佛平等無有彼此也。",
        "from": "T37n1763_043:0512a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_043:0512a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五，佛心不偏，所以能除王罪也。",
        "from": "T37n1763_043:0512a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_043:0512a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使一月常以衣食至到如來所誠心聽法。",
        "from": "T37n1763_043:0512a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯罪既重，唯應聽法，非財施所能滅也。",
        "from": "T37n1763_043:0512a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_043:0512a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六，格量去留功德多少也。",
        "from": "T37n1763_043:0512a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_043:0512a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八，明佛功德智慧因重，能滅人罪也。",
        "from": "T37n1763_043:0512a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_043:0512a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六，明佛能加益人心，所以見佛必有福利也。",
        "from": "T37n1763_043:0512a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大王答耆婆言至深自鄙悼都無去心。",
        "from": "T37n1763_043:0512a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以往為慮。",
        "from": "T37n1763_043:0512a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自鄙穢累，非聽法眷屬，往恐不必接敘也。",
        "from": "T37n1763_043:0512a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_043:0512a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七，王自念罪重，無去心也。",
        "from": "T37n1763_043:0512a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_043:0512a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖聞上六種勝說，猶未敢去也。",
        "from": "T37n1763_043:0512a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時空中尋出聲言至瘡蒸毒熱但增無損。",
        "from": "T37n1763_043:0512a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證耆婆之言。",
        "from": "T37n1763_043:0512a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王罪既重，唯佛能除，故說佛欲涅槃，勸速往也。",
        "from": "T37n1763_043:0512a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_043:0512a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三別也。",
        "from": "T37n1763_043:0512a27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前外道勸覓邪見師，次耆婆勸也，今其父自勸令隨耆婆語也。",
        "from": "T37n1763_043:0512a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_043:0512a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闍世向疑罪重，恥至佛所。",
        "from": "T37n1763_043:0512b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其父恐隨耶師，今故勸也。",
        "from": "T37n1763_043:0512b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_043:0512b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下第三，其父以神通之力，勸之令詣佛也。",
        "from": "T37n1763_043:0512b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊在雙樹間至至無量劫不入涅槃。",
        "from": "T37n1763_043:0512b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案寶亮曰：",
        "from": "T37n1763_043:0512b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明如來見闍世之心。",
        "from": "T37n1763_043:0512b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自可救之理言味而求，正為欲從闍世解常故耳。",
        "from": "T37n1763_043:0512b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言：",
        "from": "T37n1763_043:0512b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊至何故獨為阿闍世王。",
        "from": "T37n1763_043:0512b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案寶亮曰：",
        "from": "T37n1763_043:0512b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時人不解此旨，故迦葉致問也。",
        "from": "T37n1763_043:0512b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言：",
        "from": "T37n1763_043:0512b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_043:0512b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大眾中至是故悶絕自投於地。",
        "from": "T37n1763_043:0512b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人現滅，欲以益物。",
        "from": "T37n1763_043:0512b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生定滅之倒，致悶絕之苦者，佛則為之不涅槃也。",
        "from": "T37n1763_043:0512b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_043:0512b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我所言至大涅槃經亦不可思議。",
        "from": "T37n1763_043:0512b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋密語也。",
        "from": "T37n1763_043:0512b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前四句出所為之事；",
        "from": "T37n1763_043:0512b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後二句說涅槃不滅，不應以佛滅故悶絕也。",
        "from": "T37n1763_043:0512b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_043:0512b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋時之疑也。",
        "from": "T37n1763_043:0512b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非直一人，并為一切未解常者也。",
        "from": "T37n1763_043:0512b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_043:0512b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有七別，明佛放光引王詣佛，佛為說法，滅王罪也。",
        "from": "T37n1763_043:0512b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至彼自言其七事。",
        "from": "T37n1763_043:0512b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即第一先唱密語。",
        "from": "T37n1763_043:0512b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大悲導師至身瘡即愈欝蒸除滅。",
        "from": "T37n1763_043:0512b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以慈光遠至者，王聞父誨，地獄苦報必受不疑。",
        "from": "T37n1763_043:0512b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂罪不可消，自鄙凶穢，佛不接顧。",
        "from": "T37n1763_043:0512b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有此二疑，不敢詣佛。",
        "from": "T37n1763_043:0512b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈光遠至，二疑俱釋也。",
        "from": "T37n1763_043:0512b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_043:0512b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下第五段也。",
        "from": "T37n1763_043:0512b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前言為王住世治其心，雖有其言，未見其實。",
        "from": "T37n1763_043:0512b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月愛三昧，始為驗也。",
        "from": "T37n1763_043:0512b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_043:0512b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先治其身，後治心也。",
        "from": "T37n1763_043:0512b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_043:0512b25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二放光滅苦也。",
        "from": "T37n1763_043:0512b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王覺瘡愈身體清涼至先治王身然後及心。",
        "from": "T37n1763_043:0512b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引《雙樹經》稱曾聞人說夫劫火不燒眾生，先有三月並照除眾生病，使得修禪上生。",
        "from": "T37n1763_043:0512c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月光既出，無病不愈。",
        "from": "T37n1763_043:0512c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時未至而有妙光，所以喜而問也。",
        "from": "T37n1763_043:0512c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答云應故現光，無定相也。",
        "from": "T37n1763_043:0512c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非色非非色，雙釋真定相也。",
        "from": "T37n1763_043:0512c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非青非齊，偏釋真也。",
        "from": "T37n1763_043:0512c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為度眾生者，偏釋應也。",
        "from": "T37n1763_043:0512c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王言：",
        "from": "T37n1763_043:0512c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆！",
        "from": "T37n1763_043:0512c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來世尊至是故復名月愛三昧。",
        "from": "T37n1763_043:0512c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七子之中，一子遇病譬凡夫，六子譬六住。",
        "from": "T37n1763_043:0512c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈本緣苦，若重則慈重。",
        "from": "T37n1763_043:0512c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初住已離三塗，六住則永離人天，佛則放捨慈也。",
        "from": "T37n1763_043:0512c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_043:0512c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二翻正列放光，滅其身苦事也。",
        "from": "T37n1763_043:0512c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王語耆婆：",
        "from": "T37n1763_043:0512c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我聞如來至當有何心往見如來。",
        "from": "T37n1763_043:0512c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖蒙遠光，身病得除；",
        "from": "T37n1763_043:0512c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此經語，懼不敢往也。",
        "from": "T37n1763_043:0512c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將無陷入地者，若違經見佛，恐交致此苦也。",
        "from": "T37n1763_043:0512c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀如來者，向引經語，此以情推也。",
        "from": "T37n1763_043:0512c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_043:0512c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖蒙光照，猶以善惡事隔，且慚愧在顏，不欲去也。",
        "from": "T37n1763_043:0512c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆答言：",
        "from": "T37n1763_043:0512c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_043:0512c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如渴人至而當不蒙慈悲救濟。",
        "from": "T37n1763_043:0512c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為闡提說法者，以重況輕，證必濟也。",
        "from": "T37n1763_043:0512c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼非王所引之經，若果尚為闡提說法，云何不與惡人坐起耶？",
        "from": "T37n1763_043:0512c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王言：",
        "from": "T37n1763_043:0512c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆！",
        "from": "T37n1763_043:0512c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我昔曾聞至何故如來而為說法。",
        "from": "T37n1763_043:0512c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0512c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來言不虛設，云何乃為闡提說法？",
        "from": "T37n1763_043:0512c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必不然也。",
        "from": "T37n1763_043:0512c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_043:0512c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆申佛意，傍為說法。",
        "from": "T37n1763_043:0512c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚為闡提說法，況王非闡提耶！",
        "from": "T37n1763_043:0512c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_043:0512c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三王雖蒙光，心猶未達，請耆婆為決。",
        "from": "T37n1763_043:0512c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆答言：",
        "from": "T37n1763_043:0512c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_043:0512c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人至語彼醫言速疾上車。",
        "from": "T37n1763_043:0512c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_043:0512c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下第六說譬以慰王，勸令去。",
        "from": "T37n1763_043:0512c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_043:0512c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為闡提說法，凡有三意，如醫治病人：",
        "from": "T37n1763_043:0512c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為除現苦、二遣眷屬橫苦、三息外人誹謗。",
        "from": "T37n1763_043:0512c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合譬如此，可知也。",
        "from": "T37n1763_043:0512c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時良醫即自思惟至如是病者必死不疑。",
        "from": "T37n1763_043:0513a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0513a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如來為闡提說法。",
        "from": "T37n1763_043:0513a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如醫審知病者必死，不得不說法，一為病人、二為親族。",
        "from": "T37n1763_043:0513a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛亦爾，不得不說也。",
        "from": "T37n1763_043:0513a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王，世尊亦爾於一闡提輩至為一闡提而演說法。",
        "from": "T37n1763_043:0513a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0513a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明闡提說法，有二利不虛，前去凡夫誹謗、後明利益闡提，顯說法不空也。",
        "from": "T37n1763_043:0513a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如淨人者，喻未來善根也。",
        "from": "T37n1763_043:0513a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王語耆婆：",
        "from": "T37n1763_043:0513a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若使如來至得道之人不入地獄。",
        "from": "T37n1763_043:0513a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_043:0513a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冀汝捉持者，懼犯罪增生，入地獄也。",
        "from": "T37n1763_043:0513a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_043:0513a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七始從耆婆勸，命駕至佛所去也。",
        "from": "T37n1763_043:0513a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_043:0513a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四翻聞法之機發也。",
        "from": "T37n1763_043:0513a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第四十三",
        "from": "T37n1763_043:0513a13_100",
        "context_with_next_sentence": false
    }
]