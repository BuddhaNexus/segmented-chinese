[
    {
        "source_sentence": "佛說大摩里支菩薩經卷第七",
        "from": "T21n1257_007:0282a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T21n1257_007:0282a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣天息災奉　詔譯",
        "from": "T21n1257_007:0282a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次於曼拏羅四角。",
        "from": "T21n1257_007:0282a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安四菩薩。",
        "from": "T21n1257_007:0282a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東南角安唵引烏那野摩細娑嚩二合引賀菩薩。",
        "from": "T21n1257_007:0282a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西南角安唵引虞羅摩二合摩細娑嚩二合引賀菩薩。",
        "from": "T21n1257_007:0282a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西北角安唵引嚩曩摩細娑嚩二合引賀菩薩。",
        "from": "T21n1257_007:0282a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東北角安唵引支嚩囉摩細娑嚩二合引賀菩薩。",
        "from": "T21n1257_007:0282a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是菩薩各有三面。",
        "from": "T21n1257_007:0282a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一是猪面各乘其猪。",
        "from": "T21n1257_007:0282a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色相莊嚴所執幖幟而無有別。",
        "from": "T21n1257_007:0282a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於外曼拏羅有四門。",
        "from": "T21n1257_007:0282a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每門有一菩薩。",
        "from": "T21n1257_007:0282a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼四菩薩真言曰。",
        "from": "T21n1257_007:0282a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引阿引路引娑嚩二合引賀此是東門菩薩身白色。",
        "from": "T21n1257_007:0282b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引多引路引娑嚩二合引賀此是南門菩薩身黃色。",
        "from": "T21n1257_007:0282b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引迦引路引娑嚩二合引賀此是西門菩薩身赤色。",
        "from": "T21n1257_007:0282b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引薩槎路引三摩母里馱二合致娑嚩二合引賀此是北門菩薩身綠色各有二臂守護曼拏羅。",
        "from": "T21n1257_007:0282b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於四角亦有四菩薩。",
        "from": "T21n1257_007:0282b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東南角安金剛鉤菩薩真言。",
        "from": "T21n1257_007:0282b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩多引隷娑嚩二合引賀此菩薩如童女相。",
        "from": "T21n1257_007:0282b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作紅色一切莊嚴。",
        "from": "T21n1257_007:0282b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦有一猪面三目手持針線。",
        "from": "T21n1257_007:0282b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西南角安金剛索菩薩真言曰。",
        "from": "T21n1257_007:0282b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩那引隷娑嚩二合引賀此菩薩亦如童女相。",
        "from": "T21n1257_007:0282b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身金色一切莊嚴。",
        "from": "T21n1257_007:0282b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持無憂樹枝。",
        "from": "T21n1257_007:0282b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持針線。",
        "from": "T21n1257_007:0282b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能斷一切惡者。",
        "from": "T21n1257_007:0282b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西北角安金剛鎖菩薩真言曰。",
        "from": "T21n1257_007:0282b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩囉引隷娑縛二合引賀此菩薩亦童女相。",
        "from": "T21n1257_007:0282b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身白色一切莊嚴。",
        "from": "T21n1257_007:0282b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持無憂樹枝。",
        "from": "T21n1257_007:0282b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持羂索。",
        "from": "T21n1257_007:0282b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成就一切事。",
        "from": "T21n1257_007:0282b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東北角安金剛鈴菩薩真言曰。",
        "from": "T21n1257_007:0282b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩囉引賀目契娑嚩二合引賀此菩薩亦童女相。",
        "from": "T21n1257_007:0282b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身紅色一切莊嚴。",
        "from": "T21n1257_007:0282b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手持弓箭能作一切眾生敬愛。",
        "from": "T21n1257_007:0282b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等菩薩各具三面。",
        "from": "T21n1257_007:0282b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一是猪面各具三眼。",
        "from": "T21n1257_007:0282b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘猪而立如舞蹈相。",
        "from": "T21n1257_007:0282b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次外曼拏羅四方四隅。",
        "from": "T21n1257_007:0282b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有一菩薩而守護之。",
        "from": "T21n1257_007:0282b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方菩薩真言曰。",
        "from": "T21n1257_007:0282b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩賀支嚩囉摩細娑嚩二合引賀如是菩薩如童女相。",
        "from": "T21n1257_007:0282c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身色如雲乘猪。",
        "from": "T21n1257_007:0282c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三面各三目一作猪面二臂。",
        "from": "T21n1257_007:0282c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持金剛鉤。",
        "from": "T21n1257_007:0282c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持金剛索。",
        "from": "T21n1257_007:0282c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口出利牙見者恐怖。",
        "from": "T21n1257_007:0282c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東南方菩薩真言曰。",
        "from": "T21n1257_007:0282c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩囉賀目契如是菩薩色相幖幟。",
        "from": "T21n1257_007:0282c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉同東方菩薩。",
        "from": "T21n1257_007:0282c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方菩薩真言曰。",
        "from": "T21n1257_007:0282c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引播那引訖囉二合摩細娑嚩二合引賀如是菩薩亦如童女相。",
        "from": "T21n1257_007:0282c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身黃色一切莊嚴。",
        "from": "T21n1257_007:0282c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三面各三目。",
        "from": "T21n1257_007:0282c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一猪面二臂。",
        "from": "T21n1257_007:0282c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持金剛杵。",
        "from": "T21n1257_007:0282c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持無憂樹枝。",
        "from": "T21n1257_007:0282c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西南方菩薩真言曰。",
        "from": "T21n1257_007:0282c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩囉羅娑嚩二合引賀如是菩薩身相幖幟。",
        "from": "T21n1257_007:0282c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉同南方菩薩。",
        "from": "T21n1257_007:0282c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方菩薩真言曰。",
        "from": "T21n1257_007:0282c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩波囉訖囉二合摩細娑嚩二合引賀如是菩薩亦如童女相。",
        "from": "T21n1257_007:0282c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身黃色三面。",
        "from": "T21n1257_007:0282c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一猪面二臂。",
        "from": "T21n1257_007:0282c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手持弓箭。",
        "from": "T21n1257_007:0282c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西北方菩薩真言曰。",
        "from": "T21n1257_007:0282c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩那羅娑嚩二合引賀如是菩薩身相幖幟。",
        "from": "T21n1257_007:0282c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉同西方菩薩。",
        "from": "T21n1257_007:0282c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方菩薩真言曰。",
        "from": "T21n1257_007:0282c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引烏里摩二合摩細娑嚩二合引賀如是菩薩亦如童女相。",
        "from": "T21n1257_007:0282c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身綠色一切莊嚴。",
        "from": "T21n1257_007:0282c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著青天衣手持針線。",
        "from": "T21n1257_007:0282c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東北方菩薩真言曰。",
        "from": "T21n1257_007:0282c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩囉引隷娑嚩二合引賀如是菩薩身相幖幟。",
        "from": "T21n1257_007:0282c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉同北方菩薩。",
        "from": "T21n1257_007:0282c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此八大菩薩各有一猪面。",
        "from": "T21n1257_007:0282c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群猪圍繞身相相似。",
        "from": "T21n1257_007:0282c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具大勢力擁護曼拏羅。",
        "from": "T21n1257_007:0282c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能施成就法。",
        "from": "T21n1257_007:0282c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若持誦者依儀作觀。",
        "from": "T21n1257_007:0282c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而欲所求皆得圓滿。",
        "from": "T21n1257_007:0282c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想曼拏羅出一切光明。",
        "from": "T21n1257_007:0282c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光微妙入金剛杵內。",
        "from": "T21n1257_007:0282c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變成摩里支菩薩。",
        "from": "T21n1257_007:0283a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身如閻浮檀金色。",
        "from": "T21n1257_007:0283a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明著青天衣。",
        "from": "T21n1257_007:0283a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴寶塔足乘大猪。",
        "from": "T21n1257_007:0283a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六臂三面。",
        "from": "T21n1257_007:0283a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正面金色端嚴微笑。",
        "from": "T21n1257_007:0283a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左面猪相黑色醜惡。",
        "from": "T21n1257_007:0283a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口現利牙出舌顰眉。",
        "from": "T21n1257_007:0283a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作大忿怒見者怕怖。",
        "from": "T21n1257_007:0283a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右面白色如天秋月。",
        "from": "T21n1257_007:0283a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持弓線無憂樹枝。",
        "from": "T21n1257_007:0283a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持箭針金剛杵。",
        "from": "T21n1257_007:0283a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是想已。",
        "from": "T21n1257_007:0283a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曼拏羅中一切賢聖依位擁護。",
        "from": "T21n1257_007:0283a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禁縛惡者不令得便。",
        "from": "T21n1257_007:0283a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住眾生皆獲快樂。",
        "from": "T21n1257_007:0283a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時阿闍梨結金剛鉤印。",
        "from": "T21n1257_007:0283a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言請召賢聖。",
        "from": "T21n1257_007:0283a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印以二頭指背相鉤。",
        "from": "T21n1257_007:0283a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指亦背相鉤。",
        "from": "T21n1257_007:0283a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手背緊相著竪印當胸。",
        "from": "T21n1257_007:0283a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_007:0283a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𠺁吽鑁斛引鉢囉二合嚩里多二合野請召賢聖已獻閼伽。",
        "from": "T21n1257_007:0283a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水以手捧椀即誦此真言。",
        "from": "T21n1257_007:0283a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引阿里建二合鉢囉二合底蹉娑嚩二合引賀次誦動樂真言。",
        "from": "T21n1257_007:0283a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引嚩儞焰二合鉢囉二合底蹉娑嚩二合引賀復結摩里支印誦此真言。",
        "from": "T21n1257_007:0283a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引曀呬曳二合引呬尾迦悉多引誐里二合引拏引迦里沙二合曳引誦此真言已。",
        "from": "T21n1257_007:0283a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結曼拏羅三昧印。",
        "from": "T21n1257_007:0283a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手合掌。",
        "from": "T21n1257_007:0283a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指頭少開。",
        "from": "T21n1257_007:0283a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指捻中指如環相。",
        "from": "T21n1257_007:0283a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結跏趺坐安印臍上誦此真言。",
        "from": "T21n1257_007:0283a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引阿怛囉二合散儞呬覩彌引婆嚩阿努囉訖多二合引彌婆嚩酥覩引瑟喻二合彌引婆嚩酥布瑟喻二合彌引婆嚩薩里嚩二合悉地彌引鉢囉二合野蹉誦此真言時。",
        "from": "T21n1257_007:0283a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前印復安心上頸上額上頂上。",
        "from": "T21n1257_007:0283b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時受灌頂。",
        "from": "T21n1257_007:0283b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用結此印。",
        "from": "T21n1257_007:0283b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指屈入掌中。",
        "from": "T21n1257_007:0283b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指頭相對。",
        "from": "T21n1257_007:0283b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二中指按其上。",
        "from": "T21n1257_007:0283b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘指如金剛。",
        "from": "T21n1257_007:0283b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌安自頂上。",
        "from": "T21n1257_007:0283b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想毘盧遮那佛身真金色。",
        "from": "T21n1257_007:0283b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結毘盧印知在頂上。",
        "from": "T21n1257_007:0283b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_007:0283b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引僕欠阿鼻詵左𤚥引復以二手作金剛縛。",
        "from": "T21n1257_007:0283b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二中指相合竪直。",
        "from": "T21n1257_007:0283b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名金剛波羅蜜印。",
        "from": "T21n1257_007:0283b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_007:0283b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉引薩怛嚩二合吽復以二中指微曲如寶形。",
        "from": "T21n1257_007:0283b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名寶波羅蜜印。",
        "from": "T21n1257_007:0283b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_007:0283b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合囉怛曩二合怛覽二合復以二中指作如蓮華葉相。",
        "from": "T21n1257_007:0283b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名法波羅蜜印。",
        "from": "T21n1257_007:0283b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_007:0283b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合達里摩二合呬里二合復以二中指相纏二大指亦爾。",
        "from": "T21n1257_007:0283b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名羯磨波羅蜜印。",
        "from": "T21n1257_007:0283b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_007:0283b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合羯里摩二合惡誦此真言已。",
        "from": "T21n1257_007:0283b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨言我今灌頂。",
        "from": "T21n1257_007:0283b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是以印安額上頂後右耳左耳。",
        "from": "T21n1257_007:0283b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦阿閼佛真言作觸地印。",
        "from": "T21n1257_007:0283b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶生佛真言作施願印。",
        "from": "T21n1257_007:0283b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量光佛真言作入定印。",
        "from": "T21n1257_007:0283b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空成就佛真言作無畏印。",
        "from": "T21n1257_007:0283b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦忿怒真言。",
        "from": "T21n1257_007:0283b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引捺囉二合以二手各作金剛拳。",
        "from": "T21n1257_007:0283b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令頭指少屈。",
        "from": "T21n1257_007:0283b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安心上項上復胸上額上。",
        "from": "T21n1257_007:0283b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如繫華鬘以為擁護。",
        "from": "T21n1257_007:0283b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復用二手兩邊彈指。",
        "from": "T21n1257_007:0283b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即指掌作歡喜相。",
        "from": "T21n1257_007:0283b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此歡喜真言。",
        "from": "T21n1257_007:0283b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵二合嚩日囉二合覩瑟也二合斛復想阿字變成月輪。",
        "from": "T21n1257_007:0283b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪有惡字變成羯磨金剛杵。",
        "from": "T21n1257_007:0283c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結羯磨印誦此真言。",
        "from": "T21n1257_007:0283c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合薩怛嚩二合僧誐囉二合賀嚩日囉二合囉怛曩二合摩努多覽嚩日囉二合達里摩二合誐野乃嚩日囉二合羯里摩二合迦魯婆嚩以二手作金剛拳。",
        "from": "T21n1257_007:0283c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦金剛嬉戲真言。",
        "from": "T21n1257_007:0283c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合羅引細引吽唵引嚩日囉二合摩引羅吽唵引嚩日囉二合詣帝引吽唵嚩日囉二合涅里二合帝曳二合吽唵引嚩日囉二合補瑟閉二合引吽唵嚩日囉二合度閉引吽唵引嚩日囉二合禰閉吽唵引嚩日囉二合巘弟引吽復誦內外供養真言。",
        "from": "T21n1257_007:0283c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引阿迦引魯引目欠薩里嚩二合達里摩二合引拏引阿引儞也二合引努怛半二合曩怛嚩二合引復作觀想。",
        "from": "T21n1257_007:0283c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想自心上出一月輪。",
        "from": "T21n1257_007:0283c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪上有真言如華鬘相。",
        "from": "T21n1257_007:0283c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有光明如輪內然燈。",
        "from": "T21n1257_007:0283c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及曼拏羅一切賢聖皆有光明如是想已即作持誦。",
        "from": "T21n1257_007:0283c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻閼伽水誦閼伽真言。",
        "from": "T21n1257_007:0283c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻飲食等五種供養誦本真言。",
        "from": "T21n1257_007:0283c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是訖已左手執鈴。",
        "from": "T21n1257_007:0283c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦鈴真言。",
        "from": "T21n1257_007:0283c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合建致囉拏多鉢囉二合拏多三鉢囉二合引囉拏多沒馱剎怛囉二合鉢囉二合左引里儞引鉢囉二合惹拏二合播引囉彌多曩引那婆嚩二合婆引吠引嚩日囉二合馱囉訖里二合那野引嚩覩引灑尼吽吽吽誦此真言已。",
        "from": "T21n1257_007:0283c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復用右手擲金剛杵。",
        "from": "T21n1257_007:0283c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_007:0283c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引薩里嚩二合怛他引誐多悉地嚩日囉二合三摩野底瑟姹二合曀沙怛鑁二合馱引囉野引彌底呬呬呬呬吽復誦讚歎五如來真言曰。",
        "from": "T21n1257_007:0284a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿芻毘也二合嚩日囉二合摩賀引惹拏二合曩嚩日囉引馱覩摩賀引沒馱怛里二合曼拏羅怛里二合嚩日囉二合誐囉也三合具引沙嚩日囉二合曩謨引娑覩二合帝吠魯左曩摩賀引󰡊馱嚩日囉二合扇引多摩賀囉帝引鉢囉二合訖里二合底鉢囉二合婆引娑嚩二合囉達里摩二合引禰引舍嚩日囉二合曩謨娑覩二合帝囉怛曩二合囉引惹酥儼鼻里也二合佉嚩日囉二合引迦舍酥儞里摩二合羅娑嚩二合婆引嚩󰡊馱儞里隷二合引波婆引沙玉呬也二合曩謨引娑覩二合帝嚩日囉二合彌多摩賀引囉引惹儞里嚩二合羯羅波二合佉嚩日里二合尼囉引誐播引囉彌多引鉢囉二合鉢多二合婆沙嚩日囉二合曩謨引娑覩二合帝阿目佉嚩日囉二合僧沒馱薩里嚩二合引舍引波里布囉迦󰡊馱娑嚩二合婆引嚩三部多嚩日囉二合薩怛嚩二合曩謨引娑覩二合帝誦讚佛已。",
        "from": "T21n1257_007:0284a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿闍梨發勇猛心如彼本尊。",
        "from": "T21n1257_007:0284a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有飲食洗浴坐具臥具。",
        "from": "T21n1257_007:0284a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及於經行一切之事。",
        "from": "T21n1257_007:0284a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆依本尊祕密修習。",
        "from": "T21n1257_007:0284a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從早辰日中日沒。",
        "from": "T21n1257_007:0284a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三時持誦。",
        "from": "T21n1257_007:0284a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並結印相作供養已。",
        "from": "T21n1257_007:0284a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作觀想。",
        "from": "T21n1257_007:0284a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至第四時亦如是供養。",
        "from": "T21n1257_007:0284a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以此善所作功德。",
        "from": "T21n1257_007:0284a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向實際及眾生界。",
        "from": "T21n1257_007:0284a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意所求無不成就。",
        "from": "T21n1257_007:0284a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦發遣真言。",
        "from": "T21n1257_007:0284a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引訖里二合覩引嚩薩里嚩二合薩怛嚩二合引囉他二合悉地那怛嚩二合引野他引努誐引誐蹉特鑁二合沒馱尾沙焰布曩引囉引誐摩曩引野左作發遣印。",
        "from": "T21n1257_007:0284b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自頂上散其印。",
        "from": "T21n1257_007:0284b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦此真言。",
        "from": "T21n1257_007:0284b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引目次誦百字真言。",
        "from": "T21n1257_007:0284b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作自擁護身口意。",
        "from": "T21n1257_007:0284b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1257_007:0284b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合薩怛嚩二合三摩野摩努波引羅野嚩日囉二合薩怛嚩二合怛吠二合引努波底瑟姹二合涅里二合跓引彌引婆嚩酥覩瑟喻二合引彌引婆嚩阿努囉訖覩二合引彌引婆嚩酥布引瑟喻二合引彌引婆嚩薩里嚩二合悉地彌鉢囉二合野蹉薩里嚩二合羯里摩二合酥左彌引唧多室里二合焰俱魯吽賀賀賀賀斛引婆誐鑁薩里嚩二合怛他引誐多嚩日囉二合摩引彌引門左嚩日里二合婆嚩摩賀引三摩野薩怛嚩二合惡如是持誦依法軌儀。",
        "from": "T21n1257_007:0284b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所欲所求一切成就。",
        "from": "T21n1257_007:0284b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有成就法。",
        "from": "T21n1257_007:0284b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依前㡧像儀則。",
        "from": "T21n1257_007:0284b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一觀想已。",
        "from": "T21n1257_007:0284b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想自心之上有一月輪。",
        "from": "T21n1257_007:0284b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪上有第十二微妙梵字。",
        "from": "T21n1257_007:0284b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於字頭上有日月二曜。",
        "from": "T21n1257_007:0284b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出種種光明。",
        "from": "T21n1257_007:0284b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光變成天人師。",
        "from": "T21n1257_007:0284b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即獻供養。",
        "from": "T21n1257_007:0284b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想一切之法而無有我。",
        "from": "T21n1257_007:0284b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_007:0284b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引娑嚩二合婆引嚩󰡊弟誦真言已復入三昧。",
        "from": "T21n1257_007:0284b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有清淨實性真空之如。",
        "from": "T21n1257_007:0284b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心境冥合離諸分別。",
        "from": "T21n1257_007:0284b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀前梵字變成無憂樹。",
        "from": "T21n1257_007:0284b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此樹上有甘露瓶。",
        "from": "T21n1257_007:0284b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓶有𤚥字化成摩里支菩薩。",
        "from": "T21n1257_007:0284b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依此相儀觀想自身。",
        "from": "T21n1257_007:0284b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦成摩里支菩薩。",
        "from": "T21n1257_007:0284b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深黃色亦如閻浮檀金色。",
        "from": "T21n1257_007:0284b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或如日初出之色。",
        "from": "T21n1257_007:0284c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴寶塔著紅天衣。",
        "from": "T21n1257_007:0284c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳環腕釧寶帶瓔珞種種莊嚴。",
        "from": "T21n1257_007:0284c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八臂三面三目。",
        "from": "T21n1257_007:0284c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脣如曼度迦花色放大光明。",
        "from": "T21n1257_007:0284c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於寶塔內有毘盧遮那佛。",
        "from": "T21n1257_007:0284c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戴無憂華鬘。",
        "from": "T21n1257_007:0284c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持羂索弓無憂樹花枝及線。",
        "from": "T21n1257_007:0284c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持金剛杵針鉤箭。",
        "from": "T21n1257_007:0284c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正面善相微笑。",
        "from": "T21n1257_007:0284c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深黃色或檀金色。",
        "from": "T21n1257_007:0284c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼相修長脣如朱色作大勇猛相。",
        "from": "T21n1257_007:0284c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左面猪容忿怒醜惡。",
        "from": "T21n1257_007:0284c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利牙外現出舌顰眉令人怕怖。",
        "from": "T21n1257_007:0284c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右面深紅如蓮華寶色。",
        "from": "T21n1257_007:0284c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出最上光明慈顏和悅如童女相。",
        "from": "T21n1257_007:0284c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手作毘盧印乘彼猪車。",
        "from": "T21n1257_007:0284c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立如舞蹈勢。",
        "from": "T21n1257_007:0284c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩下復有風輪。",
        "from": "T21n1257_007:0284c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪有賀字。",
        "from": "T21n1257_007:0284c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此字變成羅睺大曜如日月蝕。",
        "from": "T21n1257_007:0284c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作觀想時晝對日夜對月。",
        "from": "T21n1257_007:0284c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼毘盧佛有四菩薩四方圍繞。",
        "from": "T21n1257_007:0284c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方菩薩真言曰。",
        "from": "T21n1257_007:0284c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引嚩多引隷嚩那引隷嚩囉引隷嚩囉引賀引賀目契阿迦里沙二合野𠺁娑嚩二合賀如是此菩薩紅色著紅天衣。",
        "from": "T21n1257_007:0284c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三面一猪。",
        "from": "T21n1257_007:0284c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面各三目四臂。",
        "from": "T21n1257_007:0284c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持羂索無憂樹枝。",
        "from": "T21n1257_007:0284c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持針金剛鉤。",
        "from": "T21n1257_007:0284c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意欲降伏皆得成就。",
        "from": "T21n1257_007:0284c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方菩薩真言曰。",
        "from": "T21n1257_007:0284c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引嚩多引隷嚩那引隷嚩囉引隷嚩囉引賀目契薩里嚩二合努瑟吒二合喃引目欠滿馱滿馱吽娑嚩二合引賀如是此菩薩身作黃色著黃天衣。",
        "from": "T21n1257_007:0284c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持羂索金剛杵。",
        "from": "T21n1257_007:0284c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持無憂樹枝及針。",
        "from": "T21n1257_007:0284c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縫惡者口眼。",
        "from": "T21n1257_007:0284c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方菩薩真言曰。",
        "from": "T21n1257_007:0284c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引嚩多引隷嚩那引隷嚩囉引賀目契薩里嚩二合努瑟吒二合喃引娑旦二合婆野鑁娑嚩二合引賀如是此菩薩衣服身色如前不異。",
        "from": "T21n1257_007:0285a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持金剛杵及針。",
        "from": "T21n1257_007:0285a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持無憂樹枝及羂索。",
        "from": "T21n1257_007:0285a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能禁縛一切惡者。",
        "from": "T21n1257_007:0285a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方菩薩真言曰。",
        "from": "T21n1257_007:0285a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引嚩多引隷嚩那引隷嚩囉引隷嚩囉引賀目契薩里嚩二合薩怛鑁二合引彌引嚩舍摩引曩野斛引娑嚩二合引賀如是此菩薩衣色如先。",
        "from": "T21n1257_007:0285a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身如初日之色。",
        "from": "T21n1257_007:0285a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持箭及金剛杵。",
        "from": "T21n1257_007:0285a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持無憂樹枝及弓。",
        "from": "T21n1257_007:0285a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛一切眾生。",
        "from": "T21n1257_007:0285a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼阿闍梨應如是觀想。",
        "from": "T21n1257_007:0285a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼四大菩薩智慧神力難可度量。",
        "from": "T21n1257_007:0285a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於曼拏羅請召時。",
        "from": "T21n1257_007:0285a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用金剛鉤印及本真言。",
        "from": "T21n1257_007:0285a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前儀則。",
        "from": "T21n1257_007:0285a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸持誦阿闍梨。",
        "from": "T21n1257_007:0285a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依摩里支成就法行。",
        "from": "T21n1257_007:0285a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進修習勇猛不退無缺犯。",
        "from": "T21n1257_007:0285a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾生令得菩薩清淨大智。",
        "from": "T21n1257_007:0285a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大摩里支菩薩經卷第七",
        "from": "T21n1257_007:0285a14_100",
        "context_with_next_sentence": false
    }
]