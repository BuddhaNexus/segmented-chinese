{
    "T48n2016_007:0451a22_0": "宗鏡錄卷第七",
    "T48n2016_007:0451a24_0": "慧日永明寺主智覺禪師延壽集",
    "T48n2016_007:0451a25_0": "夫水喻真心者。",
    "T48n2016_007:0451a25_1": "以水有十義。",
    "T48n2016_007:0451a25_2": "同真性故。",
    "T48n2016_007:0451a25_3": "一水體澄清。",
    "T48n2016_007:0451a26_4": "喻自性清淨心。",
    "T48n2016_007:0451a26_5": "二得泥成濁。",
    "T48n2016_007:0451a26_6": "喻淨心不染而染。",
    "T48n2016_007:0451a27_7": "三雖濁不失淨性。",
    "T48n2016_007:0451a27_8": "喻淨心染而不染。",
    "T48n2016_007:0451a28_9": "四若泥澄淨現。",
    "T48n2016_007:0451a28_10": "喻真心惑盡性現。",
    "T48n2016_007:0451a28_11": "五遇冷成氷。",
    "T48n2016_007:0451a29_12": "而有硬用。",
    "T48n2016_007:0451a29_13": "喻如來藏與無明合。",
    "T48n2016_007:0451a29_14": "成本識用。",
    "T48n2016_007:0451b01_15": "六雖成硬用。",
    "T48n2016_007:0451b01_16": "而不失濡性。",
    "T48n2016_007:0451b01_17": "喻即事恒真。",
    "T48n2016_007:0451b01_18": "七煖融成濡。",
    "T48n2016_007:0451b02_19": "喻本識還淨。",
    "T48n2016_007:0451b02_20": "八隨風波動。",
    "T48n2016_007:0451b02_21": "不改靜性。",
    "T48n2016_007:0451b03_22": "喻如來藏隨無明風。",
    "T48n2016_007:0451b03_23": "波浪起滅而不變自不生滅性。",
    "T48n2016_007:0451b04_24": "九隨地高下排引流注。",
    "T48n2016_007:0451b04_25": "而不動自性。",
    "T48n2016_007:0451b05_26": "喻真心隨緣流注。",
    "T48n2016_007:0451b05_27": "而性常湛然。",
    "T48n2016_007:0451b05_28": "十隨器方圓。",
    "T48n2016_007:0451b06_29": "而不失自性。",
    "T48n2016_007:0451b06_30": "喻真性普遍諸有為法。",
    "T48n2016_007:0451b06_31": "而不失自性。",
    "T48n2016_007:0451b07_32": "又書云。",
    "T48n2016_007:0451b07_33": "上德若水。",
    "T48n2016_007:0451b07_34": "方圓任器。",
    "T48n2016_007:0451b07_35": "曲直隨形故。",
    "T48n2016_007:0451b08_36": "如小乘俱舍論。",
    "T48n2016_007:0451b08_37": "亦說諸有為法。",
    "T48n2016_007:0451b08_38": "有剎那盡。",
    "T48n2016_007:0451b09_39": "何以知有。",
    "T48n2016_007:0451b09_40": "後有盡故。",
    "T48n2016_007:0451b09_41": "既後有盡。",
    "T48n2016_007:0451b09_42": "知前有滅。",
    "T48n2016_007:0451b10_43": "故論云。",
    "T48n2016_007:0451b10_44": "若此處生。",
    "T48n2016_007:0451b10_45": "即此處滅。",
    "T48n2016_007:0451b10_46": "無容從此轉至餘方。",
    "T48n2016_007:0451b11_47": "若此生此滅。",
    "T48n2016_007:0451b11_48": "不至餘方。",
    "T48n2016_007:0451b11_49": "同不遷義。",
    "T48n2016_007:0451b11_50": "而有法體是生是滅。",
    "T48n2016_007:0451b12_51": "故非大乘。",
    "T48n2016_007:0451b12_52": "大乘之法。",
    "T48n2016_007:0451b12_53": "緣生無性。",
    "T48n2016_007:0451b13_54": "生即不生。",
    "T48n2016_007:0451b13_55": "滅即不滅。",
    "T48n2016_007:0451b13_56": "故遷即不遷。",
    "T48n2016_007:0451b13_57": "則其理懸隔。",
    "T48n2016_007:0451b14_58": "又中論疏云。",
    "T48n2016_007:0451b14_59": "常無常門者。",
    "T48n2016_007:0451b14_60": "常即人天位定。",
    "T48n2016_007:0451b15_61": "故無往來。",
    "T48n2016_007:0451b15_62": "無常即六趣各盡一形。",
    "T48n2016_007:0451b15_63": "亦無往來。",
    "T48n2016_007:0451b16_64": "又常即凝然不動。",
    "T48n2016_007:0451b16_65": "無常念念變異。",
    "T48n2016_007:0451b16_66": "令誰往來。",
    "T48n2016_007:0451b17_67": "則常無常法。",
    "T48n2016_007:0451b17_68": "俱不相到。",
    "T48n2016_007:0451b17_69": "皆無往來。",
    "T48n2016_007:0451b17_70": "肇論云。",
    "T48n2016_007:0451b18_71": "夫人之所謂動者。",
    "T48n2016_007:0451b18_72": "以昔物不至今。",
    "T48n2016_007:0451b18_73": "故曰動而非靜。",
    "T48n2016_007:0451b19_74": "我之所謂靜者。",
    "T48n2016_007:0451b19_75": "亦以昔物不至今。",
    "T48n2016_007:0451b19_76": "故曰靜而非動。",
    "T48n2016_007:0451b20_77": "動而非靜。",
    "T48n2016_007:0451b20_78": "以其不來。",
    "T48n2016_007:0451b20_79": "靜而非動。",
    "T48n2016_007:0451b21_0": "以其不去。",
    "T48n2016_007:0451b21_1": "然則所造未甞異。",
    "T48n2016_007:0451b21_2": "所見未甞同。",
    "T48n2016_007:0451b21_3": "逆之所謂塞。",
    "T48n2016_007:0451b22_4": "順之所謂通。",
    "T48n2016_007:0451b22_5": "苟得其道。",
    "T48n2016_007:0451b22_6": "復何滯哉。",
    "T48n2016_007:0451b23_0": "傷夫人情之惑久矣。",
    "T48n2016_007:0451b23_1": "目對真而莫覺。",
    "T48n2016_007:0451b23_2": "既知往物之不來。",
    "T48n2016_007:0451b24_3": "而謂今物而可往。",
    "T48n2016_007:0451b24_4": "往物既不來。",
    "T48n2016_007:0451b24_5": "今物何可往。",
    "T48n2016_007:0451b25_6": "何則。",
    "T48n2016_007:0451b25_7": "求向物於向。",
    "T48n2016_007:0451b25_8": "於向未甞無。",
    "T48n2016_007:0451b25_9": "責向物於今。",
    "T48n2016_007:0451b26_10": "於今未甞有。",
    "T48n2016_007:0451b26_11": "於今未甞有。",
    "T48n2016_007:0451b26_12": "以明物不來。",
    "T48n2016_007:0451b27_13": "於向未甞無。",
    "T48n2016_007:0451b27_14": "故知物不去。",
    "T48n2016_007:0451b27_15": "覆而求今。",
    "T48n2016_007:0451b27_16": "今亦不往。",
    "T48n2016_007:0451b28_17": "是謂昔物自在昔。",
    "T48n2016_007:0451b28_18": "不從今以至昔。",
    "T48n2016_007:0451b28_19": "今物自在今。",
    "T48n2016_007:0451b29_20": "不從昔以至今。",
    "T48n2016_007:0451b29_21": "故仲尼曰。",
    "T48n2016_007:0451b29_22": "回也見新。",
    "T48n2016_007:0451c01_23": "交臂非故。",
    "T48n2016_007:0451c01_24": "如此則物不相往來明矣。",
    "T48n2016_007:0451c01_25": "既無往返之微朕。",
    "T48n2016_007:0451c02_26": "又何物而可動乎。",
    "T48n2016_007:0451c02_27": "釋曰。",
    "T48n2016_007:0451c02_28": "回也見新。",
    "T48n2016_007:0451c03_29": "交臂非故者。",
    "T48n2016_007:0451c03_30": "孔子謂顏回曰。",
    "T48n2016_007:0451c03_31": "吾與汝。",
    "T48n2016_007:0451c03_32": "終身交一臂已謝。",
    "T48n2016_007:0451c04_33": "豈待白首然後變乎。",
    "T48n2016_007:0451c04_34": "意明物物常自新。",
    "T48n2016_007:0451c05_35": "念念不相到。",
    "T48n2016_007:0451c05_36": "交臂之頃。",
    "T48n2016_007:0451c05_37": "尚不相待。",
    "T48n2016_007:0451c05_38": "已失前人。",
    "T48n2016_007:0451c06_39": "豈容至老而後變耶。",
    "T48n2016_007:0451c06_40": "又前念已故。",
    "T48n2016_007:0451c06_41": "後念恒新。",
    "T48n2016_007:0451c07_42": "終日相見。",
    "T48n2016_007:0451c07_43": "恒是新人。",
    "T48n2016_007:0451c07_44": "故云見新。",
    "T48n2016_007:0451c07_45": "如此新人。",
    "T48n2016_007:0451c08_46": "見之只如交臂之頃。",
    "T48n2016_007:0451c08_47": "早是後念新人。",
    "T48n2016_007:0451c08_48": "非前念時也。",
    "T48n2016_007:0451c09_49": "故云非故耳。",
    "T48n2016_007:0451c09_50": "若前念已古。",
    "T48n2016_007:0451c09_51": "後念已新。",
    "T48n2016_007:0451c10_52": "新不至古。",
    "T48n2016_007:0451c10_53": "古不待新。",
    "T48n2016_007:0451c10_54": "前後不相至。",
    "T48n2016_007:0451c10_55": "故不遷也。",
    "T48n2016_007:0451c11_56": "又雖兩人初相見。",
    "T48n2016_007:0451c11_57": "只如舉手交臂之頃。",
    "T48n2016_007:0451c12_58": "早已往矣。",
    "T48n2016_007:0451c12_59": "此取速疾也。",
    "T48n2016_007:0451c12_60": "故云。",
    "T48n2016_007:0451c12_61": "昔物自在昔。",
    "T48n2016_007:0451c13_62": "今物自在今。",
    "T48n2016_007:0451c13_63": "如紅顏自在童子之身。",
    "T48n2016_007:0451c13_64": "白首自處老年之體。",
    "T48n2016_007:0451c14_65": "所以云。",
    "T48n2016_007:0451c14_66": "人則謂少壯同體。",
    "T48n2016_007:0451c14_67": "百齡一質。",
    "T48n2016_007:0451c15_68": "徒知年往。",
    "T48n2016_007:0451c15_69": "不覺形隨。",
    "T48n2016_007:0451c15_70": "是以梵志出家。",
    "T48n2016_007:0451c16_0": "白首而歸。",
    "T48n2016_007:0451c16_1": "隣人見之曰。",
    "T48n2016_007:0451c16_2": "昔人尚存乎。",
    "T48n2016_007:0451c16_3": "梵志曰。",
    "T48n2016_007:0451c17_0": "吾猶昔人。",
    "T48n2016_007:0451c17_1": "非昔人也。",
    "T48n2016_007:0451c17_2": "隣人皆愕然非其言。",
    "T48n2016_007:0451c17_3": "所謂有力者負之而趨。",
    "T48n2016_007:0451c18_4": "昧者不覺。",
    "T48n2016_007:0451c18_5": "其斯之謂歟。",
    "T48n2016_007:0451c19_0": "吾猶昔人者。",
    "T48n2016_007:0451c19_1": "猶者。",
    "T48n2016_007:0451c19_2": "似也。",
    "T48n2016_007:0451c19_3": "吾雖此身似於昔人。",
    "T48n2016_007:0451c20_0": "然童顏自在於昔。",
    "T48n2016_007:0451c20_1": "今衰老之相。",
    "T48n2016_007:0451c20_2": "自在於今。",
    "T48n2016_007:0451c20_3": "則非昔人也。",
    "T48n2016_007:0451c21_4": "故云。",
    "T48n2016_007:0451c21_5": "徒知年往。",
    "T48n2016_007:0451c21_6": "不覺形隨。",
    "T48n2016_007:0451c21_7": "世人雖知歲月在於往古。",
    "T48n2016_007:0451c22_8": "豈覺當時之貌。",
    "T48n2016_007:0451c22_9": "亦隨年在於昔時。",
    "T48n2016_007:0451c23_10": "則童子不至老年。",
    "T48n2016_007:0451c23_11": "老年不至童子。",
    "T48n2016_007:0451c23_12": "剎那不相知。",
    "T48n2016_007:0451c24_13": "念念不相待。",
    "T48n2016_007:0451c24_14": "豈得少壯同體。",
    "T48n2016_007:0451c24_15": "百齡一質耶。",
    "T48n2016_007:0451c25_16": "又年往形亦往。",
    "T48n2016_007:0451c25_17": "此是遷義。",
    "T48n2016_007:0451c25_18": "即此遷中有不遷也。",
    "T48n2016_007:0451c26_19": "往年在往時。",
    "T48n2016_007:0451c26_20": "往形在往日。",
    "T48n2016_007:0451c26_21": "是謂不遷。",
    "T48n2016_007:0451c27_22": "而人乃謂往日之人。",
    "T48n2016_007:0451c27_23": "遷至今日。",
    "T48n2016_007:0451c27_24": "是謂惑矣。",
    "T48n2016_007:0451c28_0": "又昔自在昔。",
    "T48n2016_007:0451c28_1": "何須遷至今。",
    "T48n2016_007:0451c28_2": "今自在今。",
    "T48n2016_007:0451c28_3": "何須遷至昔。",
    "T48n2016_007:0451c29_4": "故論云。",
    "T48n2016_007:0451c29_5": "是以言往不必往。",
    "T48n2016_007:0451c29_6": "古今常存。",
    "T48n2016_007:0451c29_7": "以其不動。",
    "T48n2016_007:0452a01_8": "稱去不必去。",
    "T48n2016_007:0452a01_9": "謂不從今至古。",
    "T48n2016_007:0452a01_10": "以其不來。",
    "T48n2016_007:0452a02_11": "經中言遷。",
    "T48n2016_007:0452a02_12": "未必即遷。",
    "T48n2016_007:0452a02_13": "以古在古。",
    "T48n2016_007:0452a02_14": "以今在今故也。",
    "T48n2016_007:0452a03_15": "所以言無常者。",
    "T48n2016_007:0452a03_16": "防人之常執。",
    "T48n2016_007:0452a03_17": "言常住者。",
    "T48n2016_007:0452a04_0": "防人之斷執。",
    "T48n2016_007:0452a04_1": "言雖乖而理不異。",
    "T48n2016_007:0452a04_2": "語雖反而真不遷。",
    "T48n2016_007:0452a05_3": "不可隨方便有無之言。",
    "T48n2016_007:0452a05_4": "迷一心不遷之性。",
    "T48n2016_007:0452a06_5": "又解云。",
    "T48n2016_007:0452a06_6": "如梵志白首而歸。",
    "T48n2016_007:0452a06_7": "隣人謂少壯同體。",
    "T48n2016_007:0452a07_8": "故云昔人尚存乎。",
    "T48n2016_007:0452a07_9": "所謂有力者。",
    "T48n2016_007:0452a07_10": "則三藏等事。",
    "T48n2016_007:0452a08_11": "無常冥運。",
    "T48n2016_007:0452a08_12": "力負夜趨。",
    "T48n2016_007:0452a08_13": "交臂恒新。",
    "T48n2016_007:0452a08_14": "念念捨故。",
    "T48n2016_007:0452a09_15": "而常見昧之。",
    "T48n2016_007:0452a09_16": "謂是固矣。",
    "T48n2016_007:0452a09_17": "隣人不覺。",
    "T48n2016_007:0452a09_18": "此之謂歟。",
    "T48n2016_007:0452a10_19": "又有力者。",
    "T48n2016_007:0452a10_20": "即無常之大力也。",
    "T48n2016_007:0452a10_21": "世間未有一法。",
    "T48n2016_007:0452a11_22": "不被無常吞。",
    "T48n2016_007:0452a11_23": "故云。",
    "T48n2016_007:0452a11_24": "然則莊生之所以藏山。",
    "T48n2016_007:0452a12_0": "仲尼之所以臨川。",
    "T48n2016_007:0452a12_1": "斯皆感往者之難留。",
    "T48n2016_007:0452a12_2": "豈曰排今而可往。",
    "T48n2016_007:0452a13_3": "莊子本意。",
    "T48n2016_007:0452a13_4": "說不住之法。",
    "T48n2016_007:0452a13_5": "念念恒新。",
    "T48n2016_007:0452a14_6": "物物各住。",
    "T48n2016_007:0452a14_7": "各住相因而不相到。",
    "T48n2016_007:0452a14_8": "即不遷也。",
    "T48n2016_007:0452a15_0": "於惑者。",
    "T48n2016_007:0452a15_1": "則為無常不住。",
    "T48n2016_007:0452a15_2": "新新生滅。",
    "T48n2016_007:0452a15_3": "而謂之遷。",
    "T48n2016_007:0452a16_0": "若智者。",
    "T48n2016_007:0452a16_1": "則了性空無知。",
    "T48n2016_007:0452a16_2": "念念無生。",
    "T48n2016_007:0452a16_3": "謂之不遷。",
    "T48n2016_007:0452a17_0": "莊子有三藏。",
    "T48n2016_007:0452a17_1": "謂藏山於澤。",
    "T48n2016_007:0452a17_2": "藏舟於壑。",
    "T48n2016_007:0452a17_3": "藏天下於天下。",
    "T48n2016_007:0452a18_4": "謂之固者。",
    "T48n2016_007:0452a18_5": "不然也。",
    "T48n2016_007:0452a18_6": "然無常夜半負之而趨。",
    "T48n2016_007:0452a19_7": "昧者不覺也。",
    "T48n2016_007:0452a19_8": "三藏者。",
    "T48n2016_007:0452a19_9": "藏人於屋。",
    "T48n2016_007:0452a19_10": "藏物於器。",
    "T48n2016_007:0452a20_11": "此小藏也。",
    "T48n2016_007:0452a20_12": "藏舟於壑。",
    "T48n2016_007:0452a20_13": "藏山於澤。",
    "T48n2016_007:0452a20_14": "此大藏也。",
    "T48n2016_007:0452a21_15": "藏天下於天下。",
    "T48n2016_007:0452a21_16": "此無所藏。",
    "T48n2016_007:0452a21_17": "然大小雖異。",
    "T48n2016_007:0452a21_18": "藏皆得宜。",
    "T48n2016_007:0452a22_19": "猶念念遷流。",
    "T48n2016_007:0452a22_20": "新新移改。",
    "T48n2016_007:0452a22_21": "是知變化之道。",
    "T48n2016_007:0452a23_22": "無處可逃也。",
    "T48n2016_007:0452a23_23": "夫藏天下於天下者。",
    "T48n2016_007:0452a23_24": "豈藏之哉。",
    "T48n2016_007:0452a24_25": "蓋無所藏也。",
    "T48n2016_007:0452a24_26": "孔子在川上曰。",
    "T48n2016_007:0452a24_27": "逝者如斯夫。",
    "T48n2016_007:0452a25_0": "不捨晝夜。",
    "T48n2016_007:0452a25_1": "逝者往也。",
    "T48n2016_007:0452a25_2": "浩浩迅流。",
    "T48n2016_007:0452a25_3": "未曾暫住。",
    "T48n2016_007:0452a25_4": "晝夜常然。",
    "T48n2016_007:0452a26_5": "亦歎世人之不覺。",
    "T48n2016_007:0452a26_6": "故云。",
    "T48n2016_007:0452a26_7": "斯皆感往者之難留。",
    "T48n2016_007:0452a27_8": "豈曰排今而可往。",
    "T48n2016_007:0452a27_9": "此莊孔俱歎逝往難留。",
    "T48n2016_007:0452a28_10": "皆說無常去也。",
    "T48n2016_007:0452a28_11": "豈可推今日物到昔日乎。",
    "T48n2016_007:0452a29_12": "若今日不到昔。",
    "T48n2016_007:0452a29_13": "即今日自在今。",
    "T48n2016_007:0452a29_14": "昔日自在昔。",
    "T48n2016_007:0452b01_15": "則今昔顯然。",
    "T48n2016_007:0452b01_16": "俱不遷也。",
    "T48n2016_007:0452b01_17": "故云。",
    "T48n2016_007:0452b01_18": "何者。",
    "T48n2016_007:0452b01_19": "人則求古於今。",
    "T48n2016_007:0452b02_20": "謂其不住。",
    "T48n2016_007:0452b02_21": "吾則求今於古。",
    "T48n2016_007:0452b02_22": "知其不去。",
    "T48n2016_007:0452b03_23": "今若至古。",
    "T48n2016_007:0452b03_24": "古應有今。",
    "T48n2016_007:0452b03_25": "古若至今。",
    "T48n2016_007:0452b03_26": "今應有古。",
    "T48n2016_007:0452b04_27": "今而無古。",
    "T48n2016_007:0452b04_28": "以知不來。",
    "T48n2016_007:0452b04_29": "古而無今。",
    "T48n2016_007:0452b04_30": "以知不去。",
    "T48n2016_007:0452b05_31": "若古不至今。",
    "T48n2016_007:0452b05_32": "今不至古。",
    "T48n2016_007:0452b05_33": "事各性住。",
    "T48n2016_007:0452b05_34": "有何物而可去來。",
    "T48n2016_007:0452b06_35": "大涅槃經云。",
    "T48n2016_007:0452b06_36": "人命不停。",
    "T48n2016_007:0452b06_37": "過於山水。",
    "T48n2016_007:0452b07_0": "夫無常有二。",
    "T48n2016_007:0452b07_1": "一者敗壞無常。",
    "T48n2016_007:0452b07_2": "二者念念無常。",
    "T48n2016_007:0452b08_0": "人只知壞滅無常。",
    "T48n2016_007:0452b08_1": "而不覺念念無常。",
    "T48n2016_007:0452b08_2": "論云。",
    "T48n2016_007:0452b08_3": "若動而靜。",
    "T48n2016_007:0452b09_4": "似去而留。",
    "T48n2016_007:0452b09_5": "經說無常速疾。",
    "T48n2016_007:0452b09_6": "猶似流動。",
    "T48n2016_007:0452b10_0": "據理雖則無常。",
    "T48n2016_007:0452b10_1": "前後不相往來。",
    "T48n2016_007:0452b10_2": "故如靜也。",
    "T48n2016_007:0452b10_3": "雖則念念謝往。",
    "T48n2016_007:0452b11_4": "古今各性而住。",
    "T48n2016_007:0452b11_5": "當處自寂。",
    "T48n2016_007:0452b11_6": "故如留也。",
    "T48n2016_007:0452b12_7": "又。",
    "T48n2016_007:0452b12_8": "雖說古今各性而住。",
    "T48n2016_007:0452b12_9": "當處自寂。",
    "T48n2016_007:0452b12_10": "而宛然念念不住。",
    "T48n2016_007:0452b13_11": "前後相續也。",
    "T48n2016_007:0452b13_12": "則非常非斷。",
    "T48n2016_007:0452b13_13": "非動非靜。",
    "T48n2016_007:0452b14_14": "見物性之原也。",
    "T48n2016_007:0452b14_15": "古德問云。",
    "T48n2016_007:0452b14_16": "各性而住。",
    "T48n2016_007:0452b14_17": "似如小乘。",
    "T48n2016_007:0452b15_18": "執諸法各有自性。",
    "T48n2016_007:0452b15_19": "又何異納衣梵志言。",
    "T48n2016_007:0452b16_20": "一切眾生其性各異。",
    "T48n2016_007:0452b16_21": "答。",
    "T48n2016_007:0452b16_22": "為破去來。",
    "T48n2016_007:0452b16_23": "明無去來。",
    "T48n2016_007:0452b17_24": "所以據體言之。",
    "T48n2016_007:0452b17_25": "故云各性而住。",
    "T48n2016_007:0452b17_26": "非決定義。",
    "T48n2016_007:0452b18_0": "則以無性而為性。",
    "T48n2016_007:0452b18_1": "不同外道二乘。",
    "T48n2016_007:0452b18_2": "執有決定自性。",
    "T48n2016_007:0452b19_3": "從此向彼。",
    "T48n2016_007:0452b19_4": "若不執有定性去來。",
    "T48n2016_007:0452b19_5": "亦不說各性而住。",
    "T48n2016_007:0452b20_6": "故論云。",
    "T48n2016_007:0452b20_7": "言往不必往。",
    "T48n2016_007:0452b20_8": "閑人之常想。",
    "T48n2016_007:0452b21_0": "稱住不必住。",
    "T48n2016_007:0452b21_1": "釋人之所住耳。",
    "T48n2016_007:0452b21_2": "又劉湛注云。",
    "T48n2016_007:0452b22_0": "莊子藏山。",
    "T48n2016_007:0452b22_1": "仲尼臨川者。",
    "T48n2016_007:0452b22_2": "莊子意明前山非後山。",
    "T48n2016_007:0452b23_3": "夫子意明前水非後水。",
    "T48n2016_007:0452b23_4": "半夜有力負之而趨者。",
    "T48n2016_007:0452b24_5": "即生住異滅四時。",
    "T48n2016_007:0452b24_6": "念念遷流不停也。",
    "T48n2016_007:0452b24_7": "是以若心外取法。",
    "T48n2016_007:0452b25_8": "妄夢所見。",
    "T48n2016_007:0452b25_9": "情謂去來。",
    "T48n2016_007:0452b25_10": "則念念輪迴。",
    "T48n2016_007:0452b26_11": "心隨境轉。",
    "T48n2016_007:0452b26_12": "尚不覺無常麁相。",
    "T48n2016_007:0452b26_13": "焉能悟不遷之密旨乎。",
    "T48n2016_007:0452b27_14": "若能見法是心。",
    "T48n2016_007:0452b27_15": "隨緣了性。",
    "T48n2016_007:0452b27_16": "無一法從外而入。",
    "T48n2016_007:0452b28_17": "無一法從內而生。",
    "T48n2016_007:0452b28_18": "無一法和合而有。",
    "T48n2016_007:0452b29_19": "無一法自然而成。",
    "T48n2016_007:0452b29_20": "如是。",
    "T48n2016_007:0452b29_21": "則尚不見一微毫住相。",
    "T48n2016_007:0452c01_22": "寧觀萬法去來。",
    "T48n2016_007:0452c01_23": "斯乃徹底明宗。",
    "T48n2016_007:0452c01_24": "透峯見性。",
    "T48n2016_007:0452c02_25": "心心常合道。",
    "T48n2016_007:0452c02_26": "念念不違宗。",
    "T48n2016_007:0452c02_27": "去住同時。",
    "T48n2016_007:0452c02_28": "古今一貫。",
    "T48n2016_007:0452c03_29": "故法華經云。",
    "T48n2016_007:0452c03_30": "我觀久遠。",
    "T48n2016_007:0452c03_31": "猶若今日。",
    "T48n2016_007:0452c03_32": "維摩經云。",
    "T48n2016_007:0452c04_33": "法無去來。",
    "T48n2016_007:0452c04_34": "常不住故。",
    "T48n2016_007:0452c04_35": "若了此無所住之真心。",
    "T48n2016_007:0452c05_36": "不變異之妙性。",
    "T48n2016_007:0452c05_37": "方究竟明不遷矣。",
    "T48n2016_007:0452c05_38": "已上論中。",
    "T48n2016_007:0452c06_39": "所引內外之經典。",
    "T48n2016_007:0452c06_40": "借世相之古今。",
    "T48n2016_007:0452c06_41": "寄明不遷。",
    "T48n2016_007:0452c07_42": "同入真實。",
    "T48n2016_007:0452c07_43": "是以時因法立。",
    "T48n2016_007:0452c07_44": "法自本無。",
    "T48n2016_007:0452c08_0": "所依之法體猶空。",
    "T48n2016_007:0452c08_1": "能依之古今奚有。",
    "T48n2016_007:0452c08_2": "若假方隅而辯法。",
    "T48n2016_007:0452c09_3": "因指見月而無妨。",
    "T48n2016_007:0452c09_4": "或徇方便而迷真。",
    "T48n2016_007:0452c10_5": "執解違宗而反誤。",
    "T48n2016_007:0452c10_6": "故信心銘云。",
    "T48n2016_007:0452c10_7": "信心不二。",
    "T48n2016_007:0452c11_0": "不二信心。",
    "T48n2016_007:0452c11_1": "言語道斷。",
    "T48n2016_007:0452c11_2": "非去來今。",
    "T48n2016_007:0452c11_3": "第二。",
    "T48n2016_007:0452c11_4": "依火焰起滅喻中之義。",
    "T48n2016_007:0452c12_5": "同前。",
    "T48n2016_007:0452c12_6": "初唯焰者。",
    "T48n2016_007:0452c12_7": "謂焰起滅。",
    "T48n2016_007:0452c12_8": "有其二義。",
    "T48n2016_007:0452c13_9": "一前焰謝滅。",
    "T48n2016_007:0452c13_10": "引起後焰。",
    "T48n2016_007:0452c13_11": "後焰無體而能知前。",
    "T48n2016_007:0452c14_12": "前焰已滅。",
    "T48n2016_007:0452c14_13": "復無所知。",
    "T48n2016_007:0452c14_14": "是故各各皆不相知。",
    "T48n2016_007:0452c15_15": "二前焰若未滅。",
    "T48n2016_007:0452c15_16": "亦依前引。",
    "T48n2016_007:0452c15_17": "無體。",
    "T48n2016_007:0452c15_18": "故無能知。",
    "T48n2016_007:0452c16_19": "後焰未至。",
    "T48n2016_007:0452c16_20": "故無所知。",
    "T48n2016_007:0452c16_21": "是故彼亦各不相知。",
    "T48n2016_007:0452c17_0": "妄法亦爾。",
    "T48n2016_007:0452c17_1": "剎那生滅。",
    "T48n2016_007:0452c17_2": "不能自立。",
    "T48n2016_007:0452c17_3": "謂已滅未生。",
    "T48n2016_007:0452c18_0": "無物可知。",
    "T48n2016_007:0452c18_1": "生已則滅。",
    "T48n2016_007:0452c18_2": "無體可知。",
    "T48n2016_007:0452c18_3": "是故皆無所有也。",
    "T48n2016_007:0452c19_4": "斯則流金礫石而不熱也。",
    "T48n2016_007:0452c19_5": "二依所依者。",
    "T48n2016_007:0452c20_0": "謂彼火焰。",
    "T48n2016_007:0452c20_1": "即由於此無體無用不相知故。",
    "T48n2016_007:0452c20_2": "而有起滅虛妄之相。",
    "T48n2016_007:0452c21_3": "是則攬非有而為有也。",
    "T48n2016_007:0452c21_4": "妄法亦爾。",
    "T48n2016_007:0452c22_5": "依此無所依之真理。",
    "T48n2016_007:0452c22_6": "方是妄法。",
    "T48n2016_007:0452c22_7": "是亦非有為有也。",
    "T48n2016_007:0452c23_8": "三唯所依者。",
    "T48n2016_007:0452c23_9": "推起滅之焰。",
    "T48n2016_007:0452c23_10": "體用俱無。",
    "T48n2016_007:0452c24_11": "無焰之理。",
    "T48n2016_007:0452c24_12": "挺然顯現。",
    "T48n2016_007:0452c24_13": "是則無妄法之有。",
    "T48n2016_007:0452c25_0": "有妄法之無。",
    "T48n2016_007:0452c25_1": "湛然顯現。",
    "T48n2016_007:0452c25_2": "遂令緣起之相。",
    "T48n2016_007:0452c25_3": "相無不盡。",
    "T48n2016_007:0452c26_4": "無性之理。",
    "T48n2016_007:0452c26_5": "理無不現。",
    "T48n2016_007:0452c26_6": "又火依薪有。",
    "T48n2016_007:0452c26_7": "薪是可燃。",
    "T48n2016_007:0452c27_8": "火即是燃。",
    "T48n2016_007:0452c27_9": "以燃因可燃。",
    "T48n2016_007:0452c27_10": "則燃無體。",
    "T48n2016_007:0452c27_11": "可燃因燃。",
    "T48n2016_007:0452c28_12": "則可燃無體。",
    "T48n2016_007:0452c28_13": "又前焰已滅。",
    "T48n2016_007:0452c28_14": "後焰未生。",
    "T48n2016_007:0452c28_15": "中間無住。",
    "T48n2016_007:0452c29_16": "如一念之上。",
    "T48n2016_007:0452c29_17": "即有三時。",
    "T48n2016_007:0452c29_18": "已滅為已生。",
    "T48n2016_007:0453a01_0": "未生為未生。",
    "T48n2016_007:0453a01_1": "生已即減是生時。",
    "T48n2016_007:0453a01_2": "故淨名經云。",
    "T48n2016_007:0453a02_0": "若過去生。",
    "T48n2016_007:0453a02_1": "過去生已滅。",
    "T48n2016_007:0453a02_2": "若未來生。",
    "T48n2016_007:0453a02_3": "未來生未至。",
    "T48n2016_007:0453a03_4": "若現在生。",
    "T48n2016_007:0453a03_5": "現在生無住。",
    "T48n2016_007:0453a03_6": "經云。",
    "T48n2016_007:0453a03_7": "比丘。",
    "T48n2016_007:0453a03_8": "汝今即時。",
    "T48n2016_007:0453a04_9": "亦生亦老亦滅。",
    "T48n2016_007:0453a04_10": "故三時無體。",
    "T48n2016_007:0453a04_11": "無可相知也。",
    "T48n2016_007:0453a05_12": "第三依風有動作。",
    "T48n2016_007:0453a05_13": "喻妄用依真起。",
    "T48n2016_007:0453a05_14": "三義同前。",
    "T48n2016_007:0453a06_15": "一唯動者。",
    "T48n2016_007:0453a06_16": "離所動之物。",
    "T48n2016_007:0453a06_17": "風之動相了不可得。",
    "T48n2016_007:0453a07_18": "無可相知。",
    "T48n2016_007:0453a07_19": "妄法亦爾。",
    "T48n2016_007:0453a07_20": "離所依真體不可得故。",
    "T48n2016_007:0453a08_21": "無可相知。",
    "T48n2016_007:0453a08_22": "斯則旋嵐偃嶽而常靜也。",
    "T48n2016_007:0453a08_23": "二依所依者。",
    "T48n2016_007:0453a09_24": "謂風不能自動。",
    "T48n2016_007:0453a09_25": "要依物現動。",
    "T48n2016_007:0453a09_26": "動無自體可以知物。",
    "T48n2016_007:0453a10_27": "物不自動。",
    "T48n2016_007:0453a10_28": "隨風無體。",
    "T48n2016_007:0453a10_29": "不能知。",
    "T48n2016_007:0453a10_30": "風法中能依妄法。",
    "T48n2016_007:0453a11_31": "要依真立。",
    "T48n2016_007:0453a11_32": "無體知真。",
    "T48n2016_007:0453a11_33": "真隨妄隱。",
    "T48n2016_007:0453a12_34": "無相知妄。",
    "T48n2016_007:0453a12_35": "三唯所依者。",
    "T48n2016_007:0453a12_36": "謂風鼓於物。",
    "T48n2016_007:0453a12_37": "動唯物動。",
    "T48n2016_007:0453a13_38": "風相皆盡。",
    "T48n2016_007:0453a13_39": "無可相知。",
    "T48n2016_007:0453a13_40": "妄法作用。",
    "T48n2016_007:0453a13_41": "自本性空。",
    "T48n2016_007:0453a14_42": "唯所依真。",
    "T48n2016_007:0453a14_43": "挺然顯現。",
    "T48n2016_007:0453a14_44": "是故妄法全盡而不滅。",
    "T48n2016_007:0453a15_45": "真性全隱而恒露。",
    "T48n2016_007:0453a15_46": "能所熏等。",
    "T48n2016_007:0453a15_47": "法本自爾。",
    "T48n2016_007:0453a15_48": "思之可見。",
    "T48n2016_007:0453a16_49": "第四依地有任持者。",
    "T48n2016_007:0453a16_50": "喻妄為真所持。",
    "T48n2016_007:0453a17_0": "三義同前。",
    "T48n2016_007:0453a17_1": "初地界因依。",
    "T48n2016_007:0453a17_2": "有二種義。",
    "T48n2016_007:0453a17_3": "一約自類。",
    "T48n2016_007:0453a18_0": "二約異類。",
    "T48n2016_007:0453a18_1": "前中。",
    "T48n2016_007:0453a18_2": "從金剛際。",
    "T48n2016_007:0453a18_3": "上至地面。",
    "T48n2016_007:0453a18_4": "皆上依下。",
    "T48n2016_007:0453a19_5": "下持上。",
    "T48n2016_007:0453a19_6": "展轉因依而得安住。",
    "T48n2016_007:0453a19_7": "然上能依。",
    "T48n2016_007:0453a19_8": "皆離所無體而能知下。",
    "T48n2016_007:0453a20_9": "然下能持。",
    "T48n2016_007:0453a20_10": "皆亦離所無體可令知上。",
    "T48n2016_007:0453a21_11": "又上上能依。",
    "T48n2016_007:0453a21_12": "徹至於下。",
    "T48n2016_007:0453a21_13": "無下可相知。",
    "T48n2016_007:0453a22_14": "下下能持。",
    "T48n2016_007:0453a22_15": "徹至於上。",
    "T48n2016_007:0453a22_16": "無上可相知。",
    "T48n2016_007:0453a22_17": "是故若依若持。",
    "T48n2016_007:0453a23_18": "相無不盡。",
    "T48n2016_007:0453a23_19": "所現妄法。",
    "T48n2016_007:0453a23_20": "當知亦爾。",
    "T48n2016_007:0453a23_21": "必麁依細。",
    "T48n2016_007:0453a24_22": "謂苦報依於業。",
    "T48n2016_007:0453a24_23": "業依無明造。",
    "T48n2016_007:0453a24_24": "無明依所造。",
    "T48n2016_007:0453a25_25": "展轉無體。",
    "T48n2016_007:0453a25_26": "無物可相知。",
    "T48n2016_007:0453a25_27": "斯則厚載萬物而不仁也。",
    "T48n2016_007:0453a26_28": "肇公亦曰。",
    "T48n2016_007:0453a26_29": "乾坤倒覆。",
    "T48n2016_007:0453a26_30": "無謂不靜也。",
    "T48n2016_007:0453a27_0": "老子云。",
    "T48n2016_007:0453a27_1": "天地不仁。",
    "T48n2016_007:0453a27_2": "以萬物為芻狗。",
    "T48n2016_007:0453a27_3": "經云。",
    "T48n2016_007:0453a27_4": "譬如大地。",
    "T48n2016_007:0453a28_5": "荷四重任。",
    "T48n2016_007:0453a28_6": "而無疲厭也。",
    "T48n2016_007:0453a28_7": "不仁者。",
    "T48n2016_007:0453a28_8": "不恃仁德也。",
    "T48n2016_007:0453a29_9": "猶如草狗。",
    "T48n2016_007:0453a29_10": "豈有吠守之能。",
    "T48n2016_007:0453a29_11": "故云唯道無心。",
    "T48n2016_007:0453b01_12": "萬物圓備矣。",
    "T48n2016_007:0453b01_13": "二約異類者。",
    "T48n2016_007:0453b01_14": "如經云。",
    "T48n2016_007:0453b01_15": "地輪依水輪。",
    "T48n2016_007:0453b02_16": "水輪依風輪。",
    "T48n2016_007:0453b02_17": "風輪依虛空。",
    "T48n2016_007:0453b02_18": "虛空無所依。",
    "T48n2016_007:0453b03_0": "准此妄境依妄心。",
    "T48n2016_007:0453b03_1": "妄心依本識。",
    "T48n2016_007:0453b03_2": "本識依如來藏。",
    "T48n2016_007:0453b04_3": "如來藏。",
    "T48n2016_007:0453b04_4": "無所依。",
    "T48n2016_007:0453b04_5": "是故若離如來藏。",
    "T48n2016_007:0453b04_6": "餘諸妄法。",
    "T48n2016_007:0453b05_7": "各互相依。",
    "T48n2016_007:0453b05_8": "無體能相知。",
    "T48n2016_007:0453b05_9": "是則妄法無不皆盡。",
    "T48n2016_007:0453b06_10": "二依所依者。",
    "T48n2016_007:0453b06_11": "地界正由各無自性。",
    "T48n2016_007:0453b06_12": "而得存立。",
    "T48n2016_007:0453b07_13": "向若有體。",
    "T48n2016_007:0453b07_14": "則不相依。",
    "T48n2016_007:0453b07_15": "不相依故。",
    "T48n2016_007:0453b07_16": "不得有法。",
    "T48n2016_007:0453b08_17": "是故攬此無性。",
    "T48n2016_007:0453b08_18": "以成彼法。",
    "T48n2016_007:0453b08_19": "法合可知。",
    "T48n2016_007:0453b08_20": "三唯所依者。",
    "T48n2016_007:0453b09_21": "謂攬無性成彼法者。",
    "T48n2016_007:0453b09_22": "是則彼法無不皆盡。",
    "T48n2016_007:0453b10_23": "而未曾不滅。",
    "T48n2016_007:0453b10_24": "唯無性理而獨現前。",
    "T48n2016_007:0453b10_25": "又既不相知。",
    "T48n2016_007:0453b11_26": "何緣種種。",
    "T48n2016_007:0453b11_27": "答。",
    "T48n2016_007:0453b11_28": "此有四因。",
    "T48n2016_007:0453b11_29": "一由妄分別。",
    "T48n2016_007:0453b12_30": "二諸識熏習。",
    "T48n2016_007:0453b12_31": "三由無性不相知。",
    "T48n2016_007:0453b12_32": "四真如隨緣。",
    "T48n2016_007:0453b13_33": "然此四因。",
    "T48n2016_007:0453b13_34": "但是一致。",
    "T48n2016_007:0453b13_35": "謂由妄分別為緣。",
    "T48n2016_007:0453b13_36": "令真如不守自性。",
    "T48n2016_007:0453b14_37": "隨緣成有。",
    "T48n2016_007:0453b14_38": "諸識熏習。",
    "T48n2016_007:0453b14_39": "展轉無窮。",
    "T48n2016_007:0453b15_40": "若達妄原。",
    "T48n2016_007:0453b15_41": "成淨緣起。",
    "T48n2016_007:0453b15_42": "前所疑云。",
    "T48n2016_007:0453b15_43": "為是種種。",
    "T48n2016_007:0453b16_44": "為是一性。",
    "T48n2016_007:0453b16_45": "今答云。",
    "T48n2016_007:0453b16_46": "常種種。",
    "T48n2016_007:0453b16_47": "常一性。",
    "T48n2016_007:0453b16_48": "又難云。",
    "T48n2016_007:0453b17_49": "一性隨於種種。",
    "T48n2016_007:0453b17_50": "則失真諦。",
    "T48n2016_007:0453b17_51": "種種隨於一性。",
    "T48n2016_007:0453b18_0": "則壞俗諦。",
    "T48n2016_007:0453b18_1": "今答云。",
    "T48n2016_007:0453b18_2": "此二互相成立。",
    "T48n2016_007:0453b18_3": "豈當相乖。",
    "T48n2016_007:0453b19_0": "性非事外。",
    "T48n2016_007:0453b19_1": "曾何乖於種種。",
    "T48n2016_007:0453b19_2": "種種性空。",
    "T48n2016_007:0453b19_3": "曾何乖於一性。",
    "T48n2016_007:0453b20_4": "由無性故有。",
    "T48n2016_007:0453b20_5": "一性能成種種。",
    "T48n2016_007:0453b20_6": "緣生故空。",
    "T48n2016_007:0453b21_7": "種種能成一性。",
    "T48n2016_007:0453b21_8": "是以緣起之法。",
    "T48n2016_007:0453b21_9": "總有四義。",
    "T48n2016_007:0453b22_0": "一緣生故有。",
    "T48n2016_007:0453b22_1": "即妄心分別有。",
    "T48n2016_007:0453b22_2": "及諸識熏習是也。",
    "T48n2016_007:0453b23_3": "二緣生故空。",
    "T48n2016_007:0453b23_4": "即諸法無作用。",
    "T48n2016_007:0453b23_5": "亦無有體性是也。",
    "T48n2016_007:0453b24_6": "三無性故有。",
    "T48n2016_007:0453b24_7": "以有空義故。",
    "T48n2016_007:0453b24_8": "一切法得成也。",
    "T48n2016_007:0453b25_9": "四無性故空。",
    "T48n2016_007:0453b25_10": "即一切空無性也。",
    "T48n2016_007:0453b25_11": "復次性有二義。",
    "T48n2016_007:0453b26_12": "一有。",
    "T48n2016_007:0453b26_13": "二空。",
    "T48n2016_007:0453b26_14": "又二義。",
    "T48n2016_007:0453b26_15": "一不變。",
    "T48n2016_007:0453b26_16": "二隨緣。",
    "T48n2016_007:0453b26_17": "以有義。",
    "T48n2016_007:0453b27_18": "故說二空所顯。",
    "T48n2016_007:0453b27_19": "即法性本無生也。",
    "T48n2016_007:0453b27_20": "以空義。",
    "T48n2016_007:0453b28_21": "故說依他無性。",
    "T48n2016_007:0453b28_22": "即是圓成。",
    "T48n2016_007:0453b28_23": "即各不相知。",
    "T48n2016_007:0453b28_24": "以有義。",
    "T48n2016_007:0453b29_25": "故說不變。",
    "T48n2016_007:0453b29_26": "以空義。",
    "T48n2016_007:0453b29_27": "故說隨緣。",
    "T48n2016_007:0453b29_28": "此二不二。",
    "T48n2016_007:0453c01_29": "隨緣即是不變。",
    "T48n2016_007:0453c01_30": "不變故能隨緣。",
    "T48n2016_007:0453c01_31": "若唯不變性。",
    "T48n2016_007:0453c02_32": "何預於法。",
    "T48n2016_007:0453c02_33": "若但隨緣。",
    "T48n2016_007:0453c02_34": "豈稱真性。",
    "T48n2016_007:0453c02_35": "又若性離於法。",
    "T48n2016_007:0453c03_36": "則成斷滅。",
    "T48n2016_007:0453c03_37": "法離於性。",
    "T48n2016_007:0453c03_38": "則本無今有。",
    "T48n2016_007:0453c03_39": "又法若即性。",
    "T48n2016_007:0453c04_40": "性常應常。",
    "T48n2016_007:0453c04_41": "性若即法。",
    "T48n2016_007:0453c04_42": "法滅應滅。",
    "T48n2016_007:0453c04_43": "此二相成。",
    "T48n2016_007:0453c05_44": "非常非斷。",
    "T48n2016_007:0453c05_45": "此二相奪。",
    "T48n2016_007:0453c05_46": "非有非空。",
    "T48n2016_007:0453c05_47": "為中道義。",
    "T48n2016_007:0453c06_48": "經頌云。",
    "T48n2016_007:0453c06_49": "眼耳鼻舌身。",
    "T48n2016_007:0453c06_50": "心意諸情根。",
    "T48n2016_007:0453c06_51": "以此常流轉。",
    "T48n2016_007:0453c07_52": "而無能轉者。",
    "T48n2016_007:0453c07_53": "以眼等八識。",
    "T48n2016_007:0453c07_54": "為能所熏。",
    "T48n2016_007:0453c07_55": "展轉為因而常流轉。",
    "T48n2016_007:0453c08_56": "無別我人。",
    "T48n2016_007:0453c08_57": "故云而無能轉者。",
    "T48n2016_007:0453c09_58": "是以舉體性空。",
    "T48n2016_007:0453c09_59": "方成流轉。",
    "T48n2016_007:0453c09_60": "即此八識各無體性。",
    "T48n2016_007:0453c10_61": "故無實我法而為其主。",
    "T48n2016_007:0453c10_62": "向若有性。",
    "T48n2016_007:0453c10_63": "不可熏變。",
    "T48n2016_007:0453c11_64": "安得流轉。",
    "T48n2016_007:0453c11_65": "故知趣生同異。",
    "T48n2016_007:0453c11_66": "受報妍媸。",
    "T48n2016_007:0453c11_67": "皆由識種。",
    "T48n2016_007:0453c12_68": "悉依於心。",
    "T48n2016_007:0453c12_69": "如流依水。",
    "T48n2016_007:0453c12_70": "似火依薪。",
    "T48n2016_007:0453c12_71": "續續無知。",
    "T48n2016_007:0453c13_72": "新新不住。",
    "T48n2016_007:0453c13_73": "善趣惡趣。",
    "T48n2016_007:0453c13_74": "即是總報。",
    "T48n2016_007:0453c13_75": "由業熏心。",
    "T48n2016_007:0453c14_76": "受所受報。",
    "T48n2016_007:0453c14_77": "如水漂流不斷。",
    "T48n2016_007:0453c14_78": "雖然流轉。",
    "T48n2016_007:0453c14_79": "而無轉者。",
    "T48n2016_007:0453c15_80": "故云以此常流轉。",
    "T48n2016_007:0453c15_81": "而無能轉者。",
    "T48n2016_007:0453c15_82": "釋論云。",
    "T48n2016_007:0453c16_0": "如瀑流水。",
    "T48n2016_007:0453c16_1": "非斷非常。",
    "T48n2016_007:0453c16_2": "相續長時。",
    "T48n2016_007:0453c16_3": "有所漂溺。",
    "T48n2016_007:0453c16_4": "此識亦爾。",
    "T48n2016_007:0453c17_5": "從無始來。",
    "T48n2016_007:0453c17_6": "剎那剎那。",
    "T48n2016_007:0453c17_7": "果生因滅。",
    "T48n2016_007:0453c17_8": "果生故非斷。",
    "T48n2016_007:0453c18_9": "因滅故非常。",
    "T48n2016_007:0453c18_10": "漂溺有情。",
    "T48n2016_007:0453c18_11": "令不出離。",
    "T48n2016_007:0453c18_12": "華嚴經云。",
    "T48n2016_007:0453c19_13": "一切眾生。",
    "T48n2016_007:0453c19_14": "為大瀑水。",
    "T48n2016_007:0453c19_15": "波浪所沒。",
    "T48n2016_007:0453c19_16": "楞伽經云。",
    "T48n2016_007:0453c20_17": "藏識海常住。",
    "T48n2016_007:0453c20_18": "境界風所動。",
    "T48n2016_007:0453c20_19": "唯識論云。",
    "T48n2016_007:0453c20_20": "恒轉如瀑流。",
    "T48n2016_007:0453c21_21": "起信論云。",
    "T48n2016_007:0453c21_22": "如大海水。",
    "T48n2016_007:0453c21_23": "因風波動等。",
    "T48n2016_007:0453c22_0": "又以虛妄中有其二義。",
    "T48n2016_007:0453c22_1": "一虛轉。",
    "T48n2016_007:0453c22_2": "二無轉。",
    "T48n2016_007:0453c22_3": "故常種種。",
    "T48n2016_007:0453c23_4": "常一性也。",
    "T48n2016_007:0453c23_5": "虛轉故。",
    "T48n2016_007:0453c23_6": "俗不異真而俗相立。",
    "T48n2016_007:0453c24_0": "無轉故。",
    "T48n2016_007:0453c24_1": "真不異俗而真體存。",
    "T48n2016_007:0453c24_2": "故互不相違也。",
    "T48n2016_007:0453c25_0": "法性本無生者。",
    "T48n2016_007:0453c25_1": "法性者。",
    "T48n2016_007:0453c25_2": "法謂差別依正等法。",
    "T48n2016_007:0453c26_0": "性謂彼法所依體性。",
    "T48n2016_007:0453c26_1": "即法之性。",
    "T48n2016_007:0453c26_2": "故名為法性。",
    "T48n2016_007:0453c27_0": "又性以不變為義。",
    "T48n2016_007:0453c27_1": "即此可軌。",
    "T48n2016_007:0453c27_2": "亦名為法。",
    "T48n2016_007:0453c27_3": "此則性即法。",
    "T48n2016_007:0453c28_4": "故名為法性。",
    "T48n2016_007:0453c28_5": "此二義。",
    "T48n2016_007:0453c28_6": "並約不變釋也。",
    "T48n2016_007:0453c29_0": "又即一切法各無性。",
    "T48n2016_007:0453c29_1": "故名為法性。",
    "T48n2016_007:0453c29_2": "即隨緣之性。",
    "T48n2016_007:0454a01_3": "法即性也。",
    "T48n2016_007:0454a01_4": "本無生者。",
    "T48n2016_007:0454a01_5": "本有二義。",
    "T48n2016_007:0454a01_6": "一約不變。",
    "T48n2016_007:0454a02_7": "本謂原本。",
    "T48n2016_007:0454a02_8": "本來不生。",
    "T48n2016_007:0454a02_9": "隨緣故生。",
    "T48n2016_007:0454a02_10": "二約隨緣。",
    "T48n2016_007:0454a03_11": "有此法來。",
    "T48n2016_007:0454a03_12": "本自不生。",
    "T48n2016_007:0454a03_13": "非待滅無。",
    "T48n2016_007:0454a03_14": "即示現生時本不生。",
    "T48n2016_007:0454a04_15": "故云是中無能現。",
    "T48n2016_007:0454a04_16": "亦無所現物。",
    "T48n2016_007:0454a04_17": "則妄心分別。",
    "T48n2016_007:0454a05_18": "情計謂有。",
    "T48n2016_007:0454a05_19": "然有即不有。",
    "T48n2016_007:0454a05_20": "故云一切空無性。",
    "T48n2016_007:0454a06_21": "常有常空。",
    "T48n2016_007:0454a06_22": "是即萬物之自虛。",
    "T48n2016_007:0454a06_23": "豈待宰割以求通哉。",
    "T48n2016_007:0454a07_24": "又約相待相奪。",
    "T48n2016_007:0454a07_25": "釋不相知。",
    "T48n2016_007:0454a07_26": "言相待者。",
    "T48n2016_007:0454a08_27": "業無識種。",
    "T48n2016_007:0454a08_28": "不親辦體。",
    "T48n2016_007:0454a08_29": "識無業種。",
    "T48n2016_007:0454a08_30": "不招苦樂。",
    "T48n2016_007:0454a09_31": "既互相待。",
    "T48n2016_007:0454a09_32": "則各無自性。",
    "T48n2016_007:0454a09_33": "言相奪者。",
    "T48n2016_007:0454a09_34": "以業奪因。",
    "T48n2016_007:0454a10_35": "唯由業招。",
    "T48n2016_007:0454a10_36": "故因如虛空。",
    "T48n2016_007:0454a10_37": "以因奪緣。",
    "T48n2016_007:0454a10_38": "則唯心為體。",
    "T48n2016_007:0454a11_39": "故業如虛空。",
    "T48n2016_007:0454a11_40": "互奪獨立。",
    "T48n2016_007:0454a11_41": "亦不能相知。",
    "T48n2016_007:0454a11_42": "互奪兩亡。",
    "T48n2016_007:0454a12_43": "無可相知。",
    "T48n2016_007:0454a12_44": "又以無生。",
    "T48n2016_007:0454a12_45": "故不相知。",
    "T48n2016_007:0454a12_46": "以緣奪因。",
    "T48n2016_007:0454a13_47": "故不自生。",
    "T48n2016_007:0454a13_48": "以因奪緣。",
    "T48n2016_007:0454a13_49": "故不他生。",
    "T48n2016_007:0454a13_50": "因緣合辯。",
    "T48n2016_007:0454a14_51": "相待無性。",
    "T48n2016_007:0454a14_52": "故不共生。",
    "T48n2016_007:0454a14_53": "互奪雙亡。",
    "T48n2016_007:0454a14_54": "無因豈生。",
    "T48n2016_007:0454a15_55": "以此不生。",
    "T48n2016_007:0454a15_56": "類於不知。",
    "T48n2016_007:0454a15_57": "居然易了。",
    "T48n2016_007:0454a15_58": "即以因為。",
    "T48n2016_007:0454a16_59": "自以緣為他。",
    "T48n2016_007:0454a16_60": "合此為共。",
    "T48n2016_007:0454a16_61": "離此為無因。",
    "T48n2016_007:0454a16_62": "互有尚不相知。",
    "T48n2016_007:0454a17_63": "互無豈能相知耳。",
    "T48n2016_007:0454a17_64": "故知諸法相待。",
    "T48n2016_007:0454a18_0": "皆無自性。",
    "T48n2016_007:0454a18_1": "如中論相待門說。",
    "T48n2016_007:0454a18_2": "不空既破。",
    "T48n2016_007:0454a18_3": "空法亦亡。",
    "T48n2016_007:0454a19_4": "偈云。",
    "T48n2016_007:0454a19_5": "若有不真法。",
    "T48n2016_007:0454a19_6": "即應有真法。",
    "T48n2016_007:0454a19_7": "實無不真法。",
    "T48n2016_007:0454a20_8": "何得有真法。",
    "T48n2016_007:0454a20_9": "亦如因垢說淨。",
    "T48n2016_007:0454a20_10": "垢性本無。",
    "T48n2016_007:0454a21_0": "淨相何有。",
    "T48n2016_007:0454a21_1": "此相待一門。",
    "T48n2016_007:0454a21_2": "盡破諸法。",
    "T48n2016_007:0454a21_3": "以諸法皆是相待而有。",
    "T48n2016_007:0454a22_4": "未曾有一法。",
    "T48n2016_007:0454a22_5": "而能獨立者。",
    "T48n2016_007:0454a22_6": "故因緣無性論云。",
    "T48n2016_007:0454a23_7": "阿難調達。",
    "T48n2016_007:0454a23_8": "並為世尊之弟。",
    "T48n2016_007:0454a23_9": "羅睺善星。",
    "T48n2016_007:0454a24_10": "同是如來之胤。",
    "T48n2016_007:0454a24_11": "而阿難常親給侍。",
    "T48n2016_007:0454a24_12": "調達每興害逆。",
    "T48n2016_007:0454a25_13": "羅睺則護珠莫犯。",
    "T48n2016_007:0454a25_14": "善星則破器難收。",
    "T48n2016_007:0454a26_15": "以此而觀。",
    "T48n2016_007:0454a26_16": "諒可知矣。",
    "T48n2016_007:0454a26_17": "若云各有自性。",
    "T48n2016_007:0454a26_18": "不可遷貿者。",
    "T48n2016_007:0454a27_19": "此殊不然。",
    "T48n2016_007:0454a27_20": "至如鷹化為鳩。",
    "T48n2016_007:0454a27_21": "本心頓盡。",
    "T48n2016_007:0454a28_0": "橘變成枳。",
    "T48n2016_007:0454a28_1": "前味永消。",
    "T48n2016_007:0454a28_2": "故知有情無情。",
    "T48n2016_007:0454a28_3": "各無定性。",
    "T48n2016_007:0454a29_4": "但隨心變。",
    "T48n2016_007:0454a29_5": "唯逐業生。",
    "T48n2016_007:0454a29_6": "遂有從凡入聖之門。",
    "T48n2016_007:0454b01_0": "轉惡為善之事。",
    "T48n2016_007:0454b01_1": "大般若經云。",
    "T48n2016_007:0454b01_2": "謂證諸法無性為性。",
    "T48n2016_007:0454b02_3": "究竟圓滿。",
    "T48n2016_007:0454b02_4": "方名為佛。",
    "T48n2016_007:0454b02_5": "故知建立三寶。",
    "T48n2016_007:0454b02_6": "成佛事門。",
    "T48n2016_007:0454b03_7": "皆從無性因緣。",
    "T48n2016_007:0454b03_8": "而得興顯。",
    "T48n2016_007:0454b03_9": "所以首楞嚴三昧經云。",
    "T48n2016_007:0454b04_10": "爾時長老摩訶迦葉白佛言。",
    "T48n2016_007:0454b04_11": "世尊。",
    "T48n2016_007:0454b05_12": "我謂文殊師利法王子。",
    "T48n2016_007:0454b05_13": "曾於先世。",
    "T48n2016_007:0454b05_14": "已作佛事。",
    "T48n2016_007:0454b06_15": "現坐道場。",
    "T48n2016_007:0454b06_16": "轉於法輪。",
    "T48n2016_007:0454b06_17": "示諸眾生。",
    "T48n2016_007:0454b06_18": "入大滅度。",
    "T48n2016_007:0454b07_19": "佛言。",
    "T48n2016_007:0454b07_20": "如是如是。",
    "T48n2016_007:0454b07_21": "乃至迦葉。",
    "T48n2016_007:0454b07_22": "汝今且觀首楞嚴三昧勢力。",
    "T48n2016_007:0454b08_23": "諸大菩薩以是力故。",
    "T48n2016_007:0454b08_24": "示現入胎。",
    "T48n2016_007:0454b09_0": "初生出家。",
    "T48n2016_007:0454b09_1": "詣菩提樹。",
    "T48n2016_007:0454b09_2": "坐於道場。",
    "T48n2016_007:0454b09_3": "轉妙法輪。",
    "T48n2016_007:0454b09_4": "入般涅槃。",
    "T48n2016_007:0454b10_5": "分布舍利。",
    "T48n2016_007:0454b10_6": "而亦不捨菩薩之法。",
    "T48n2016_007:0454b10_7": "於般涅槃不畢竟滅。",
    "T48n2016_007:0454b11_8": "爾時長老摩訶迦葉。",
    "T48n2016_007:0454b11_9": "語文殊師利言。",
    "T48n2016_007:0454b12_10": "仁者。",
    "T48n2016_007:0454b12_11": "乃能施作如此希有難事。",
    "T48n2016_007:0454b12_12": "示現眾生。",
    "T48n2016_007:0454b13_13": "文殊師利言。",
    "T48n2016_007:0454b13_14": "迦葉。",
    "T48n2016_007:0454b13_15": "於意云何。",
    "T48n2016_007:0454b13_16": "是耆闍崛山。",
    "T48n2016_007:0454b14_17": "誰之所造。",
    "T48n2016_007:0454b14_18": "是世界者。",
    "T48n2016_007:0454b14_19": "亦從何出。",
    "T48n2016_007:0454b14_20": "迦葉答言。",
    "T48n2016_007:0454b15_21": "文殊師利。",
    "T48n2016_007:0454b15_22": "一切世界。",
    "T48n2016_007:0454b15_23": "水沫所成。",
    "T48n2016_007:0454b15_24": "亦從眾生不可思議業因緣出。",
    "T48n2016_007:0454b16_25": "文殊師利言。",
    "T48n2016_007:0454b16_26": "一切諸法。",
    "T48n2016_007:0454b17_0": "亦從不可思議業因緣有。",
    "T48n2016_007:0454b17_1": "我於是事。",
    "T48n2016_007:0454b17_2": "無有功力。",
    "T48n2016_007:0454b18_3": "所以者何。",
    "T48n2016_007:0454b18_4": "一切諸法。",
    "T48n2016_007:0454b18_5": "皆屬因緣。",
    "T48n2016_007:0454b18_6": "無有主故。",
    "T48n2016_007:0454b19_7": "隨意所成。",
    "T48n2016_007:0454b19_8": "若能解此。",
    "T48n2016_007:0454b19_9": "所為不難。",
    "T48n2016_007:0454b19_10": "釋曰。",
    "T48n2016_007:0454b19_11": "若了一切法。",
    "T48n2016_007:0454b20_12": "悉屬因緣。",
    "T48n2016_007:0454b20_13": "皆無自性。",
    "T48n2016_007:0454b20_14": "但是心生。",
    "T48n2016_007:0454b20_15": "則凡有施為。",
    "T48n2016_007:0454b21_16": "何假功力。",
    "T48n2016_007:0454b21_17": "以無性之理。",
    "T48n2016_007:0454b21_18": "法爾之門。",
    "T48n2016_007:0454b22_0": "隨緣卷舒。",
    "T48n2016_007:0454b22_1": "自在無礙。",
    "T48n2016_007:0454b22_2": "華嚴經頌云。",
    "T48n2016_007:0454b22_3": "如其心性而觀察。",
    "T48n2016_007:0454b23_4": "畢竟推求不可得。",
    "T48n2016_007:0454b23_5": "一切諸法無有餘。",
    "T48n2016_007:0454b24_0": "悉入於如無體性。",
    "T48n2016_007:0454b24_1": "又頌云。",
    "T48n2016_007:0454b24_2": "譬如真如本自性。",
    "T48n2016_007:0454b25_0": "其中未曾有一法。",
    "T48n2016_007:0454b25_1": "不得自性是真性。",
    "T48n2016_007:0454b25_2": "以如是業而迴向。",
    "T48n2016_007:0454b26_3": "華嚴論云。",
    "T48n2016_007:0454b26_4": "一切眾生迷根本智。",
    "T48n2016_007:0454b26_5": "而有世間苦樂法者。",
    "T48n2016_007:0454b27_6": "為智無性故。",
    "T48n2016_007:0454b27_7": "隨緣不覺。",
    "T48n2016_007:0454b27_8": "苦樂業生。",
    "T48n2016_007:0454b28_9": "為智無性故。",
    "T48n2016_007:0454b28_10": "為苦所纏。",
    "T48n2016_007:0454b28_11": "方能自覺根本無性。",
    "T48n2016_007:0454b29_12": "眾緣無性。",
    "T48n2016_007:0454b29_13": "萬法自寂。",
    "T48n2016_007:0454b29_14": "若不覺苦時。",
    "T48n2016_007:0454b29_15": "以無性故。",
    "T48n2016_007:0454c01_16": "總不自知有性無性。",
    "T48n2016_007:0454c01_17": "如人因地而倒。",
    "T48n2016_007:0454c02_0": "因地而起。",
    "T48n2016_007:0454c02_1": "一切眾生。",
    "T48n2016_007:0454c02_2": "因自心根本智而倒。",
    "T48n2016_007:0454c02_3": "亦因而起。",
    "T48n2016_007:0454c03_4": "又為智體無性。",
    "T48n2016_007:0454c03_5": "但隨緣現。",
    "T48n2016_007:0454c03_6": "如空中響。",
    "T48n2016_007:0454c04_0": "應物成音。",
    "T48n2016_007:0454c04_1": "無性之智。",
    "T48n2016_007:0454c04_2": "但應緣分別。",
    "T48n2016_007:0454c04_3": "以分別故。",
    "T48n2016_007:0454c05_0": "癡愛隨起。",
    "T48n2016_007:0454c05_1": "又中觀論。",
    "T48n2016_007:0454c05_2": "破應無如來偈云。",
    "T48n2016_007:0454c05_3": "邪見深厚者。",
    "T48n2016_007:0454c06_4": "則說無如來。",
    "T48n2016_007:0454c06_5": "如來寂滅相。",
    "T48n2016_007:0454c06_6": "分別有亦非。",
    "T48n2016_007:0454c07_7": "如是性空中。",
    "T48n2016_007:0454c07_8": "思惟亦不可。",
    "T48n2016_007:0454c07_9": "如來滅度後。",
    "T48n2016_007:0454c07_10": "分別於有無。",
    "T48n2016_007:0454c08_11": "次總拂偈云。",
    "T48n2016_007:0454c08_12": "如來過戲論。",
    "T48n2016_007:0454c08_13": "而人生戲論。",
    "T48n2016_007:0454c09_14": "戲論破慧眼。",
    "T48n2016_007:0454c09_15": "是皆不見佛。",
    "T48n2016_007:0454c09_16": "論釋云。",
    "T48n2016_007:0454c09_17": "戲論名憶念。",
    "T48n2016_007:0454c10_18": "分別此彼等。",
    "T48n2016_007:0454c10_19": "此如來品。",
    "T48n2016_007:0454c10_20": "初中後思惟如來定性不可得。",
    "T48n2016_007:0454c11_21": "乃至五求四句皆非是。",
    "T48n2016_007:0454c11_22": "故偈云。",
    "T48n2016_007:0454c12_23": "如來無有性。",
    "T48n2016_007:0454c12_24": "即是世間性。",
    "T48n2016_007:0454c12_25": "如來無有性。",
    "T48n2016_007:0454c13_0": "世間亦無性。",
    "T48n2016_007:0454c13_1": "以如來一性空義。",
    "T48n2016_007:0454c13_2": "知一切世間法。",
    "T48n2016_007:0454c14_3": "悉皆無性。",
    "T48n2016_007:0454c14_4": "同如來義。",
    "T48n2016_007:0454c14_5": "華嚴演義中。",
    "T48n2016_007:0454c14_6": "引法華經偈云。",
    "T48n2016_007:0454c15_7": "未來世諸佛。",
    "T48n2016_007:0454c15_8": "雖說百千億。",
    "T48n2016_007:0454c15_9": "無數諸法門。",
    "T48n2016_007:0454c16_10": "其實為一乘。",
    "T48n2016_007:0454c16_11": "諸佛兩足尊。",
    "T48n2016_007:0454c16_12": "知法常無性。",
    "T48n2016_007:0454c16_13": "佛種從緣起。",
    "T48n2016_007:0454c17_14": "是故說一乘。",
    "T48n2016_007:0454c17_15": "是法住法位。",
    "T48n2016_007:0454c17_16": "世間相常住。",
    "T48n2016_007:0454c18_17": "於道場知已。",
    "T48n2016_007:0454c18_18": "導師方便說。",
    "T48n2016_007:0454c18_19": "今但引兩句。",
    "T48n2016_007:0454c19_0": "顯諸法無性。",
    "T48n2016_007:0454c19_1": "成一性義耳。",
    "T48n2016_007:0454c19_2": "然上三偈。",
    "T48n2016_007:0454c19_3": "諸釋不同。",
    "T48n2016_007:0454c20_4": "今直解經文。",
    "T48n2016_007:0454c20_5": "初一偈。",
    "T48n2016_007:0454c20_6": "明當佛開權。",
    "T48n2016_007:0454c20_7": "終歸一實。",
    "T48n2016_007:0454c21_8": "故云其實為一乘。",
    "T48n2016_007:0454c21_9": "次偈釋說一乘所以。",
    "T48n2016_007:0454c21_10": "以唯一性故。",
    "T48n2016_007:0454c22_11": "謂若有二性。",
    "T48n2016_007:0454c22_12": "容有兩乘。",
    "T48n2016_007:0454c22_13": "既唯一性。",
    "T48n2016_007:0454c23_0": "故說一乘耳。",
    "T48n2016_007:0454c23_1": "知法常無性者。",
    "T48n2016_007:0454c23_2": "知即證知。",
    "T48n2016_007:0454c23_3": "法謂所證知法。",
    "T48n2016_007:0454c24_4": "即色心等一切法也。",
    "T48n2016_007:0454c24_5": "常無性者。",
    "T48n2016_007:0454c24_6": "所證理也。",
    "T48n2016_007:0454c25_7": "即如無性理。",
    "T48n2016_007:0454c25_8": "覺諸法故。",
    "T48n2016_007:0454c25_9": "云何無性。",
    "T48n2016_007:0454c25_10": "謂色心等從本已來。",
    "T48n2016_007:0454c26_11": "性相空寂。",
    "T48n2016_007:0454c26_12": "非自非他。",
    "T48n2016_007:0454c26_13": "非共非離。",
    "T48n2016_007:0454c27_14": "湛然常寂。",
    "T48n2016_007:0454c27_15": "故曰無性。",
    "T48n2016_007:0454c27_16": "而言常者。",
    "T48n2016_007:0454c27_17": "謂本來即無。",
    "T48n2016_007:0454c28_18": "非推之使無。",
    "T48n2016_007:0454c28_19": "故曰常無性耳。",
    "T48n2016_007:0454c28_20": "佛種從緣起者。",
    "T48n2016_007:0454c29_21": "然有二義。",
    "T48n2016_007:0454c29_22": "一約因種。",
    "T48n2016_007:0454c29_23": "因種即正因佛性。",
    "T48n2016_007:0455a01_0": "故涅槃經云。",
    "T48n2016_007:0455a01_1": "佛性者。",
    "T48n2016_007:0455a01_2": "即是無上菩提中道種子。",
    "T48n2016_007:0455a02_3": "此種即前常無性理。",
    "T48n2016_007:0455a02_4": "故涅槃經云。",
    "T48n2016_007:0455a02_5": "佛性者。",
    "T48n2016_007:0455a03_0": "即是第一義空。",
    "T48n2016_007:0455a03_1": "無性。",
    "T48n2016_007:0455a03_2": "即空義也。",
    "T48n2016_007:0455a03_3": "緣即六度萬行。",
    "T48n2016_007:0455a04_4": "是緣因佛性。",
    "T48n2016_007:0455a04_5": "起彼正因。",
    "T48n2016_007:0455a04_6": "令得成佛。",
    "T48n2016_007:0455a04_7": "是故說一乘者。",
    "T48n2016_007:0455a05_8": "唯以佛性起於佛性。",
    "T48n2016_007:0455a05_9": "更無餘性。",
    "T48n2016_007:0455a05_10": "故說一乘。",
    "T48n2016_007:0455a06_11": "稱理說也。",
    "T48n2016_007:0455a06_12": "體同曰性。",
    "T48n2016_007:0455a06_13": "相似名種。",
    "T48n2016_007:0455a06_14": "故關中云。",
    "T48n2016_007:0455a07_15": "如稻自生稻。",
    "T48n2016_007:0455a07_16": "不生餘穀。",
    "T48n2016_007:0455a07_17": "此屬性也。",
    "T48n2016_007:0455a07_18": "萌[卄/稈]華粒。",
    "T48n2016_007:0455a08_19": "其類無差。",
    "T48n2016_007:0455a08_20": "此屬種也。",
    "T48n2016_007:0455a08_21": "二果種性。",
    "T48n2016_007:0455a08_22": "關中云。",
    "T48n2016_007:0455a09_0": "佛報唯佛。",
    "T48n2016_007:0455a09_1": "其理不差。",
    "T48n2016_007:0455a09_2": "即性義也。",
    "T48n2016_007:0455a09_3": "說法度人。",
    "T48n2016_007:0455a09_4": "類皆相似。",
    "T48n2016_007:0455a10_5": "此種義也。",
    "T48n2016_007:0455a10_6": "果之種性。",
    "T48n2016_007:0455a10_7": "緣真理生。",
    "T48n2016_007:0455a10_8": "故云從緣。",
    "T48n2016_007:0455a11_9": "故釋此偈云。",
    "T48n2016_007:0455a11_10": "佛緣理生。",
    "T48n2016_007:0455a11_11": "理既無二。",
    "T48n2016_007:0455a11_12": "是故說一乘耳。",
    "T48n2016_007:0455a12_13": "意云。",
    "T48n2016_007:0455a12_14": "證理成佛。",
    "T48n2016_007:0455a12_15": "稱理說一。",
    "T48n2016_007:0455a12_16": "此中知法常無性偈。",
    "T48n2016_007:0455a13_17": "全同華嚴出現品經云。",
    "T48n2016_007:0455a13_18": "如來成正覺時。",
    "T48n2016_007:0455a14_19": "於其身中。",
    "T48n2016_007:0455a14_20": "普見一切眾生成正覺。",
    "T48n2016_007:0455a14_21": "乃至普見一切眾生入涅槃。",
    "T48n2016_007:0455a15_22": "皆同一性。",
    "T48n2016_007:0455a15_23": "所謂無性。",
    "T48n2016_007:0455a16_24": "乃至知一切法。",
    "T48n2016_007:0455a16_25": "皆無性故。",
    "T48n2016_007:0455a16_26": "得一切智。",
    "T48n2016_007:0455a16_27": "大悲相續。",
    "T48n2016_007:0455a17_28": "救度眾生。",
    "T48n2016_007:0455a17_29": "謂知無性。",
    "T48n2016_007:0455a17_30": "佛性同故。",
    "T48n2016_007:0455a17_31": "准經文云。",
    "T48n2016_007:0455a18_32": "以知無性。",
    "T48n2016_007:0455a18_33": "尚得一成一切皆成。",
    "T48n2016_007:0455a18_34": "況不說一乘而度脫之。",
    "T48n2016_007:0455a19_35": "後偈云。",
    "T48n2016_007:0455a19_36": "是法住法位等者。",
    "T48n2016_007:0455a19_37": "重釋前偈。",
    "T48n2016_007:0455a20_38": "言是法者。",
    "T48n2016_007:0455a20_39": "即前所知之法。",
    "T48n2016_007:0455a20_40": "所以常無性者。",
    "T48n2016_007:0455a21_41": "由住真如正位故。",
    "T48n2016_007:0455a21_42": "由緣無性。",
    "T48n2016_007:0455a21_43": "緣起即真。",
    "T48n2016_007:0455a21_44": "由即真。",
    "T48n2016_007:0455a22_45": "故云無性。",
    "T48n2016_007:0455a22_46": "言法位者。",
    "T48n2016_007:0455a22_47": "即真如正位。",
    "T48n2016_007:0455a22_48": "故智論。",
    "T48n2016_007:0455a23_49": "說。",
    "T48n2016_007:0455a23_50": "法性。",
    "T48n2016_007:0455a23_51": "法界。",
    "T48n2016_007:0455a23_52": "法住。",
    "T48n2016_007:0455a23_53": "法位。",
    "T48n2016_007:0455a23_54": "皆真如異名。",
    "T48n2016_007:0455a23_55": "世法即如。",
    "T48n2016_007:0455a24_56": "故皆常住。",
    "T48n2016_007:0455a24_57": "謂因乖常理。",
    "T48n2016_007:0455a24_58": "成三界無常。",
    "T48n2016_007:0455a25_0": "若解無常之實。",
    "T48n2016_007:0455a25_1": "即無常而成常矣。",
    "T48n2016_007:0455a25_2": "則常與無常。",
    "T48n2016_007:0455a26_3": "二理不偏。",
    "T48n2016_007:0455a26_4": "故涅槃經況之二鳥。",
    "T48n2016_007:0455a26_5": "飛止同居。",
    "T48n2016_007:0455a27_0": "今於道場。",
    "T48n2016_007:0455a27_1": "證知一切世間無常。",
    "T48n2016_007:0455a27_2": "即真常理。",
    "T48n2016_007:0455a27_3": "猶懸鏡高堂。",
    "T48n2016_007:0455a28_4": "萬像斯鑒。",
    "T48n2016_007:0455a28_5": "二而不二。",
    "T48n2016_007:0455a28_6": "不可言宣。",
    "T48n2016_007:0455a28_7": "以方便力。",
    "T48n2016_007:0455a29_8": "假以言說。",
    "T48n2016_007:0455a29_9": "一乘尚是假說。",
    "T48n2016_007:0455a29_10": "況有二三。",
    "T48n2016_007:0455b01_0": "則一乘之理。",
    "T48n2016_007:0455b01_1": "至理無過。",
    "T48n2016_007:0455b01_2": "無性之宗。",
    "T48n2016_007:0455b01_3": "諸宗莫及。",
    "T48n2016_007:0455b02_0": "可謂宗鏡之綱骨。",
    "T48n2016_007:0455b02_1": "祖教之指南也。",
    "T48n2016_007:0455b02_2": "所以深密經云。",
    "T48n2016_007:0455b03_3": "一切諸法。",
    "T48n2016_007:0455b03_4": "皆無自性。",
    "T48n2016_007:0455b03_5": "無生無滅。",
    "T48n2016_007:0455b03_6": "本來寂靜。",
    "T48n2016_007:0455b04_7": "自性涅槃。",
    "T48n2016_007:0455b04_8": "商主天子所問經云。",
    "T48n2016_007:0455b04_9": "若法是無。",
    "T48n2016_007:0455b05_0": "即不自在。",
    "T48n2016_007:0455b05_1": "若不自在。",
    "T48n2016_007:0455b05_2": "是則無欲。",
    "T48n2016_007:0455b05_3": "若無欲者。",
    "T48n2016_007:0455b06_0": "則是真性。",
    "T48n2016_007:0455b06_1": "若是真性。",
    "T48n2016_007:0455b06_2": "即名無性。",
    "T48n2016_007:0455b07_0": "宗鏡錄卷第七"
}