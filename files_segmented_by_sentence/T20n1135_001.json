[
    {
        "source_sentence": "佛說一切如來金剛壽命陀羅尼",
        "from": "T20n1135_001:0578a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經",
        "from": "T20n1135_001:0578a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T20n1135_001:0578a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空諡大鑑正號大廣智大興善寺三藏沙門不空奉　詔譯如是我聞。",
        "from": "T20n1135_001:0578a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在殑伽河側。",
        "from": "T20n1135_001:0578a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸比丘及大菩薩無量天人大眾俱。",
        "from": "T20n1135_001:0578a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告毘沙門等四天王言。",
        "from": "T20n1135_001:0578a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四種法甚可怖畏。",
        "from": "T20n1135_001:0578a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若男若女童男童女。",
        "from": "T20n1135_001:0578a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情無能免者。",
        "from": "T20n1135_001:0578a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂生老病死。",
        "from": "T20n1135_001:0578a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中一法最為遍惱。",
        "from": "T20n1135_001:0578a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難可對治。",
        "from": "T20n1135_001:0578a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂死怖。",
        "from": "T20n1135_001:0578a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我愍是故說對治法。",
        "from": "T20n1135_001:0578a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王白佛言。",
        "from": "T20n1135_001:0578a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我於今日為獲大利。",
        "from": "T20n1135_001:0578a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊為眾生故宣說是法。",
        "from": "T20n1135_001:0578a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊面向東方。",
        "from": "T20n1135_001:0578a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指召集一切如來。",
        "from": "T20n1135_001:0578a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是誓言。",
        "from": "T20n1135_001:0578a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有十方一切如來應正等覺。",
        "from": "T20n1135_001:0578a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眾生故。",
        "from": "T20n1135_001:0578a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證菩提者咸皆助我。",
        "from": "T20n1135_001:0578a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我以一切如來威神力故。",
        "from": "T20n1135_001:0578a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉令一切眾生轉非命業。",
        "from": "T20n1135_001:0578b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使增壽命。",
        "from": "T20n1135_001:0578b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我昔未為眾生轉此法輪。",
        "from": "T20n1135_001:0578b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於今方轉。",
        "from": "T20n1135_001:0578b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生壽命色力皆得成就無夭死怖。",
        "from": "T20n1135_001:0578b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是南西北方四維上下。",
        "from": "T20n1135_001:0578b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召集驚告亦復如是。",
        "from": "T20n1135_001:0578b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時十方盡佛眼所到。",
        "from": "T20n1135_001:0578b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若干世界一切如來皆悉赴集。",
        "from": "T20n1135_001:0578b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿虛空數如微塵。",
        "from": "T20n1135_001:0578b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時一切諸佛為加持故。",
        "from": "T20n1135_001:0578b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異口同音。",
        "from": "T20n1135_001:0578b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說一切如來金剛壽命陀羅尼曰。",
        "from": "T20n1135_001:0578b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛胵他一者犁二者攞者犁三彌娜知薩嚩二合薩底二合稽四斫訖浪二合蘖南五鉢囉二合舍滿都薩婆路誐六薩婆薩怛嚩二合南七阿娜𪘜八俱娜𪘨九遮㘑遮㘑十係麼澆牛矯反哩十一係麼儞鏟尼十二係麼尸棄十三矯囉微十四矯囉迷十五係俱囉微十六信囉𠼐十七俱麼底十八微捨麼抳十九戍戍毘嚩二十阿者犁二十一彌者犁二十二麼尾覽麼二十三戶毛戶毛二十四唵二十五麼折囉諭師某甲二十六薩嚩訶爾時十方佛所。",
        "from": "T20n1135_001:0578b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切執金剛菩薩異口同音亦說延命陀羅尼曰。",
        "from": "T20n1135_001:0578b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽引吽引尸棄薩嚩二合引訶引如是一切如來及十方執金剛菩薩。",
        "from": "T20n1135_001:0578b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是陀羅尼已隱而不現。",
        "from": "T20n1135_001:0578b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時毘沙門天王白佛言。",
        "from": "T20n1135_001:0578b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦以佛神力。",
        "from": "T20n1135_001:0578b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切眾生加持護念。",
        "from": "T20n1135_001:0578b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除非命故說陀羅尼。",
        "from": "T20n1135_001:0578b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始尾二合下同帝一始尾怛犁二栗利爾時毘樓勒叉天王又白佛言。",
        "from": "T20n1135_001:0578b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦以佛神力。",
        "from": "T20n1135_001:0578b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為多眾生除夭命故。",
        "from": "T20n1135_001:0578b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說陀囉尼。",
        "from": "T20n1135_001:0578b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩登霓一摩登儗尼二輸麼輸麼謀三爾時提頭賴吒天王亦白佛言。",
        "from": "T20n1135_001:0578b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦為諸眾生。",
        "from": "T20n1135_001:0578c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除死怖故說陀羅尼。",
        "from": "T20n1135_001:0578c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "者𡅏者𡅏一者囉𠼐爾時毘樓博叉天王亦白佛言。",
        "from": "T20n1135_001:0578c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦以佛神力故。",
        "from": "T20n1135_001:0578c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令一切眾生除非命故說陀羅尼。",
        "from": "T20n1135_001:0578c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未臨一麼麼麼佛告四天王言。",
        "from": "T20n1135_001:0578c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有讀誦此經。",
        "from": "T20n1135_001:0578c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日受持乃至一遍。",
        "from": "T20n1135_001:0578c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當敬彼善男子善女人。",
        "from": "T20n1135_001:0578c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應如佛想終不墮三惡道定增壽命。",
        "from": "T20n1135_001:0578c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人每日。",
        "from": "T20n1135_001:0578c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切眾生轉讀此經。",
        "from": "T20n1135_001:0578c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終無夭死短命之怖。",
        "from": "T20n1135_001:0578c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無惡夢魘魅。",
        "from": "T20n1135_001:0578c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪咀惡形。",
        "from": "T20n1135_001:0578c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅剎鬼神之怖。",
        "from": "T20n1135_001:0578c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為水火兵毒之所傷害。",
        "from": "T20n1135_001:0578c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛菩薩攝受護念其處。",
        "from": "T20n1135_001:0578c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為佛所護持。",
        "from": "T20n1135_001:0578c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是經已。",
        "from": "T20n1135_001:0578c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘沙門天王等一切大眾。",
        "from": "T20n1135_001:0578c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T20n1135_001:0578c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說一切如來金剛壽命陀羅尼經",
        "from": "T20n1135_001:0578c14_100",
        "context_with_next_sentence": false
    }
]