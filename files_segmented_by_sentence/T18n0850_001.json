[
    {
        "source_sentence": "攝大毘盧遮那成佛神變加持經",
        "from": "T18n0850_001:0065a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入蓮華胎藏海會悲生曼荼攞廣",
        "from": "T18n0850_001:0065a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大念誦儀軌供養方便會第一",
        "from": "T18n0850_001:0065a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首毘盧遮那佛，　　開敷淨眼如青蓮，",
        "from": "T18n0850_001:0065a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我依大日經王說，　　供養所資眾儀軌。",
        "from": "T18n0850_001:0065a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成次第真言法，　　如彼當得速成就，",
        "from": "T18n0850_001:0065b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又令本心離垢故，　　我今隨要略宣說。",
        "from": "T18n0850_001:0065b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲於此生入悉地，　　隨其所應思念之，",
        "from": "T18n0850_001:0065b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親於尊所授明法，　　觀察相應作成就。",
        "from": "T18n0850_001:0065b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先禮灌頂傳教尊，　　請白真言所修業，",
        "from": "T18n0850_001:0065b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者蒙師許可已，　　依於地分所宜處。",
        "from": "T18n0850_001:0065b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙山輔峯半巖間，　　種種龕窟兩山中，",
        "from": "T18n0850_001:0065b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或諸如來聖弟子，　　甞於往昔所遊居，",
        "from": "T18n0850_001:0065b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺塔練若古仙室，　　當於自心意樂處，",
        "from": "T18n0850_001:0065b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲愍有情畫大壇，　　次補如來開法眼。",
        "from": "T18n0850_001:0065b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能度人天無量眾，　　即是如來勝生子，",
        "from": "T18n0850_001:0065b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具淨慧力能堪忍，　　精進不求諸世間。",
        "from": "T18n0850_001:0065b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夜放逸所生罪，　　殷勤還淨皆悔除，",
        "from": "T18n0850_001:0065b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心目視觀諦明了，　　五輪投地而作禮。",
        "from": "T18n0850_001:0065b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命十方正等覺，　　三世一切具三身，",
        "from": "T18n0850_001:0065b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命一切大乘法，　　歸命不退菩提眾，",
        "from": "T18n0850_001:0065b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命諸明真實言，　　歸命一切諸密印，",
        "from": "T18n0850_001:0065b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以身口意清淨業，　　殷勤無量恭敬禮。",
        "from": "T18n0850_001:0065b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作禮方便真言曰用下持地印：",
        "from": "T18n0850_001:0065b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此作禮真實言，　　即能遍禮十方佛，",
        "from": "T18n0850_001:0065b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地合爪掌，　　思惟說悔先罪業，",
        "from": "T18n0850_001:0065b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我由無明所積集，　　身口意業造眾罪，",
        "from": "T18n0850_001:0065b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪慾恚癡覆心故，　　於佛正法賢聖僧，",
        "from": "T18n0850_001:0065b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母二師善知識，　　以及無量眾生所，",
        "from": "T18n0850_001:0065b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始生死流轉中，　　具造極重無盡罪，",
        "from": "T18n0850_001:0065b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親對十方現在佛，　　悉皆懺悔不復作。",
        "from": "T18n0850_001:0065b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出罪方便真言曰普通：",
        "from": "T18n0850_001:0065b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無十方三世佛，　　三種常身正法藏，",
        "from": "T18n0850_001:0065c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝願菩提大心眾，　　我今皆悉正歸依。",
        "from": "T18n0850_001:0065c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依方便真言曰普通：",
        "from": "T18n0850_001:0065c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我淨此身離諸垢，　　及與三世身口意，",
        "from": "T18n0850_001:0065c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過於大海剎塵數，　　奉獻一切諸如來。",
        "from": "T18n0850_001:0065c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施身方便真言曰身同獨股杵相：",
        "from": "T18n0850_001:0065c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨菩提心勝願寶，　　我今起發濟群生，",
        "from": "T18n0850_001:0065c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生苦等集所纏身，　　及與無知所害身，",
        "from": "T18n0850_001:0065c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救攝歸依令解脫，　　常當利益諸含識。",
        "from": "T18n0850_001:0065c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心方便真言曰縛印：",
        "from": "T18n0850_001:0065c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方無量世界中，　　諸正遍知大海眾，",
        "from": "T18n0850_001:0065c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種善巧方便力，　　及諸佛子為群生，",
        "from": "T18n0850_001:0065c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有所修福業等，　　我今一切盡隨喜。",
        "from": "T18n0850_001:0065c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜方便真言曰歸命合掌：",
        "from": "T18n0850_001:0065c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今勸請諸如來，　　菩提大心救世者，",
        "from": "T18n0850_001:0066a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願普於十方界，　　恒以大雲降法雨。",
        "from": "T18n0850_001:0066a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請方便真言曰：",
        "from": "T18n0850_001:0066a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願令凡夫所住處，　　速捨眾苦所集身，",
        "from": "T18n0850_001:0066a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得至於無垢處，　　安住清淨法界身。",
        "from": "T18n0850_001:0066a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉請法身方便真言曰：",
        "from": "T18n0850_001:0066a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所修一切眾善業，　　利益一切眾生故，",
        "from": "T18n0850_001:0066a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今盡皆正迴向，　　除生死苦至菩提。",
        "from": "T18n0850_001:0066a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向方便真言曰：",
        "from": "T18n0850_001:0066a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復造所餘諸福事，　　讀誦經行宴坐等，",
        "from": "T18n0850_001:0066a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令身心遍清淨，　　哀愍救攝於自他，",
        "from": "T18n0850_001:0066a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心性如是離諸垢，　　身隨所應以安坐，",
        "from": "T18n0850_001:0066a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分明諦觀初字門，　　輪圍九重虛圓白，",
        "from": "T18n0850_001:0066a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知密印相，　　諸正遍知說，",
        "from": "T18n0850_001:0066a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當合定慧手，　　竝建二空輪，",
        "from": "T18n0850_001:0066a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍觸諸支分，　　誦持真實語，",
        "from": "T18n0850_001:0066a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入佛三昧耶，　　三昧耶真言。",
        "from": "T18n0850_001:0066a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔結此密印，　　能淨如來地，",
        "from": "T18n0850_001:0066b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地波羅蜜滿，　　成三法界道，",
        "from": "T18n0850_001:0066b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所餘諸密印，　　印品次當陳。",
        "from": "T18n0850_001:0066b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結法界生，　　密慧之幖幟，",
        "from": "T18n0850_001:0066b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨身口意故，　　遍轉於身分。",
        "from": "T18n0850_001:0066b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若三昧手，　　俱作金剛拳，",
        "from": "T18n0850_001:0066b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二空在其掌，　　風幢皆正直，",
        "from": "T18n0850_001:0066b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是名法界，　　清淨之祕印。",
        "from": "T18n0850_001:0066b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界生真言：",
        "from": "T18n0850_001:0066b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法界自性，　　而觀於自身，",
        "from": "T18n0850_001:0066b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以真實言，　　三轉而宣說，",
        "from": "T18n0850_001:0066b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當見住法體，　　無垢如虛空，",
        "from": "T18n0850_001:0066b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言印威力，　　加持行人故。",
        "from": "T18n0850_001:0066b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令彼堅固，　　觀自執金剛，",
        "from": "T18n0850_001:0066b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結金剛智印，　　止觀手相背，",
        "from": "T18n0850_001:0066b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地水火風輪，　　左右互相持，",
        "from": "T18n0850_001:0066b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二空各旋轉，　　合於慧掌中，",
        "from": "T18n0850_001:0066b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名為法輪，　　最勝吉祥印。",
        "from": "T18n0850_001:0066b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人當不久，　　同於救世者，",
        "from": "T18n0850_001:0066b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言印威力，　　成就者當見，",
        "from": "T18n0850_001:0066b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌如寶輪轉，　　而轉大法輪。",
        "from": "T18n0850_001:0066b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵言：",
        "from": "T18n0850_001:0066b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言已，　　當住於等引，",
        "from": "T18n0850_001:0066c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀我此身，　　即是執金剛。",
        "from": "T18n0850_001:0066c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量天魔眾，　　諸有見之者，",
        "from": "T18n0850_001:0066c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金剛薩埵，　　勿生疑惑心。",
        "from": "T18n0850_001:0066c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次擐金剛甲，　　當觀所被服，",
        "from": "T18n0850_001:0066c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍體生焰光，　　用是嚴身故，",
        "from": "T18n0850_001:0066c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸魔為障者，　　及餘惡心類，",
        "from": "T18n0850_001:0066c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩之咸四散。",
        "from": "T18n0850_001:0066c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀二風輪，　　糺持火輪上，",
        "from": "T18n0850_001:0066c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二空自相竝，　　而在於掌中。",
        "from": "T18n0850_001:0066c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦彼真言已，　　當觀無垢字。",
        "from": "T18n0850_001:0066c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛甲冑明：",
        "from": "T18n0850_001:0066c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囉字色鮮白，　　空點以嚴之，",
        "from": "T18n0850_001:0066c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼髻明珠，　　置之於頂上。",
        "from": "T18n0850_001:0066c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設於百劫中，　　所積眾罪垢，",
        "from": "T18n0850_001:0066c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是悉除滅，　　福慧皆圓滿。",
        "from": "T18n0850_001:0066c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼真言曰：",
        "from": "T18n0850_001:0066c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言同法界，　　無量眾罪除，",
        "from": "T18n0850_001:0066c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當成就，　　住於不退地。",
        "from": "T18n0850_001:0066c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切觸穢處，　　當加此字門，",
        "from": "T18n0850_001:0067a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赤色具威光，　　焰鬘遍圍繞。",
        "from": "T18n0850_001:0067a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次為降伏魔，　　制諸大障者，",
        "from": "T18n0850_001:0067a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當念大護者，　　無能堪忍明。",
        "from": "T18n0850_001:0067a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印相如下明，大護真言曰：",
        "from": "T18n0850_001:0067a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由纔憶念故，　　諸尾曩夜迦，",
        "from": "T18n0850_001:0067a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡形羅剎等，　　彼一切馳散。",
        "from": "T18n0850_001:0067a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現前觀囉字，　　具點廣嚴飾，",
        "from": "T18n0850_001:0067a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂淨光焰鬘，　　赫如朝日暉，",
        "from": "T18n0850_001:0067a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念聲真實義，　　能除一切障，",
        "from": "T18n0850_001:0067a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫三毒垢，　　諸法亦復然。",
        "from": "T18n0850_001:0067a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先自淨心地，　　次淨道場地，",
        "from": "T18n0850_001:0067a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉除眾過患，　　其相如虛空，",
        "from": "T18n0850_001:0067a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金剛所持，　　此地亦如是。",
        "from": "T18n0850_001:0067a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑜伽者諦觀，　　五輪最深密，",
        "from": "T18n0850_001:0067a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最初於下位，　　思惟彼風輪，",
        "from": "T18n0850_001:0067a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賀字所安住，　　黑光焰流布。",
        "from": "T18n0850_001:0067a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼真言曰：",
        "from": "T18n0850_001:0067a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次上安水輪，　　其色猶雪乳，",
        "from": "T18n0850_001:0067a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩字所安住，　　頗胝月電光。",
        "from": "T18n0850_001:0067a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼真言曰：",
        "from": "T18n0850_001:0067a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於水輪上，　　觀作金剛輪，",
        "from": "T18n0850_001:0067b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想置本初字，　　四方遍黃色。",
        "from": "T18n0850_001:0067b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼真言曰：",
        "from": "T18n0850_001:0067b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是輪如金剛，　　名大因陀羅，",
        "from": "T18n0850_001:0067b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光焰淨金色，　　普皆遍流出。",
        "from": "T18n0850_001:0067b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼中思惟，　　導師諸佛子，",
        "from": "T18n0850_001:0067b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水中觀白蓮，　　妙色金剛莖，",
        "from": "T18n0850_001:0067b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八葉具鬚蘂，　　眾寶自莊嚴，",
        "from": "T18n0850_001:0067b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常出無量光，　　百千眾蓮繞。",
        "from": "T18n0850_001:0067b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其上復觀想，　　大覺師子座，",
        "from": "T18n0850_001:0067b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶王以挍飾，　　在大宮殿中，",
        "from": "T18n0850_001:0067b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶柱皆行列，　　遍有諸幢蓋，",
        "from": "T18n0850_001:0067b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珠鬘等交絡，　　垂懸妙寶衣，",
        "from": "T18n0850_001:0067b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周布香華雲，　　及與眾寶雲，",
        "from": "T18n0850_001:0067b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普雨雜華等，　　繽紛以嚴地，",
        "from": "T18n0850_001:0067b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諧韻所愛聲，　　而奏諸音樂。",
        "from": "T18n0850_001:0067b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宮中想淨妙，　　賢瓶於閼伽，",
        "from": "T18n0850_001:0067b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶樹王開敷，　　照以摩尼燈。",
        "from": "T18n0850_001:0067b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧總持地，　　自在之婇女，",
        "from": "T18n0850_001:0067b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛波羅蜜等，　　菩提妙嚴華，",
        "from": "T18n0850_001:0067b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便作眾伎，　　歌詠妙法音。",
        "from": "T18n0850_001:0067b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我功德力，　　如來加持力，",
        "from": "T18n0850_001:0067b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以法界力，　　普供養而住。",
        "from": "T18n0850_001:0067b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏明妃真言曰法應多誦，觀想如經：",
        "from": "T18n0850_001:0067b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此持一切，　　真實無有異，",
        "from": "T18n0850_001:0067c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛掌虛中，　　是則加持印，",
        "from": "T18n0850_001:0067c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法不生，　　自性本寂故。",
        "from": "T18n0850_001:0067c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想念此真實，　　阿字置其中，",
        "from": "T18n0850_001:0067c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當轉阿字，　　成大日牟尼，",
        "from": "T18n0850_001:0067c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡剎塵眾，　　普現圓光內，",
        "from": "T18n0850_001:0067c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千界為增數，　　流出光焰輪，",
        "from": "T18n0850_001:0067c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍至眾生界，　　隨性令開悟，",
        "from": "T18n0850_001:0067c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身語遍一切，　　佛心亦復然。",
        "from": "T18n0850_001:0067c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻浮淨金色，　　為應世間故，",
        "from": "T18n0850_001:0067c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跏趺坐蓮上，　　正受離諸毒，",
        "from": "T18n0850_001:0067c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身被綃縠衣，　　自然髮髻冠，",
        "from": "T18n0850_001:0067c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字門轉成佛，　　亦利諸眾生。",
        "from": "T18n0850_001:0067c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如大日尊，　　瑜伽者觀察，",
        "from": "T18n0850_001:0067c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一身與二身，　　同入於本體，",
        "from": "T18n0850_001:0067c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出亦如是。",
        "from": "T18n0850_001:0067c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依前法而轉，　　召用三部心，",
        "from": "T18n0850_001:0067c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風鉤再加請，　　為令心喜故。",
        "from": "T18n0850_001:0067c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結塗香印，　　觀掌向外竪，",
        "from": "T18n0850_001:0067c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止羽握右觀，　　心想塗香雲，",
        "from": "T18n0850_001:0067c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清涼遍世界。",
        "from": "T18n0850_001:0067c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香真言曰：",
        "from": "T18n0850_001:0067c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明奉華印，　　八度內相叉，",
        "from": "T18n0850_001:0068a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腕合風頭拄，　　印如掬華勢。",
        "from": "T18n0850_001:0068a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0850_001:0068a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明燒香印，　　六度內背竪，",
        "from": "T18n0850_001:0068a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二風頭側合，　　空各附於風。",
        "from": "T18n0850_001:0068a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0850_001:0068a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明飲食印，　　二地側相著，",
        "from": "T18n0850_001:0068a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水火風頭合，　　空附於風下，",
        "from": "T18n0850_001:0068a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如食器形，　　腕合向前獻。",
        "from": "T18n0850_001:0068a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0850_001:0068a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明燈明印，　　觀拳火輪竪，",
        "from": "T18n0850_001:0068a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空拄火下節，　　運想無邊剎，",
        "from": "T18n0850_001:0068a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一諸佛前，　　光明為佛事。",
        "from": "T18n0850_001:0068a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0850_001:0068a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應長跪普通掌，　　讚揚如來諸福智，",
        "from": "T18n0850_001:0068a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此已讚歎剎塵眾，　　為求悉地發清音，",
        "from": "T18n0850_001:0068a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殷勤唄唱三至七。",
        "from": "T18n0850_001:0068a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　次誦吉慶伽他句，或五或七下至三，　　警覺諸尊發歡喜。",
        "from": "T18n0850_001:0068a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0850_001:0068a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻閼伽印，　　止觀蓮華合，",
        "from": "T18n0850_001:0068b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風開附火節，　　空各附於風，",
        "from": "T18n0850_001:0068b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先右後左膝，　　展印至於額，",
        "from": "T18n0850_001:0068b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三奉於聖天。",
        "from": "T18n0850_001:0068b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨獻皆啟白，　　當得無垢地，",
        "from": "T18n0850_001:0068b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離惱清涼定。",
        "from": "T18n0850_001:0068b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閼伽真言曰：",
        "from": "T18n0850_001:0068b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次執金剛杵，　　抽擲振金鈴，",
        "from": "T18n0850_001:0068b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再加轉法輪，　　諦想執金剛。",
        "from": "T18n0850_001:0068b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如於法界性，　　當住菩提心，",
        "from": "T18n0850_001:0068b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結方隅印，　　用聖不動尊。",
        "from": "T18n0850_001:0068b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左轉成辟除，　　右旋及上下，",
        "from": "T18n0850_001:0068b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備觸身支分，　　結護悉堅牢。",
        "from": "T18n0850_001:0068b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真語母陀羅，　　如下當分別。",
        "from": "T18n0850_001:0068b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既為嚴備訖，　　當示根本契，",
        "from": "T18n0850_001:0068b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還加於五處，　　七轉或再三，",
        "from": "T18n0850_001:0068b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散印頂上開，　　半跏正身意，",
        "from": "T18n0850_001:0068b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作相應坐，　　隨方如教說。",
        "from": "T18n0850_001:0068b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正面住身前，　　觀一圓明像，",
        "from": "T18n0850_001:0068b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨無瑕玷，　　猶如滿月輪。",
        "from": "T18n0850_001:0068b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中有本尊形，　　妙色超三界，",
        "from": "T18n0850_001:0068b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紗縠嚴身服，　　寶冠紺髮垂，",
        "from": "T18n0850_001:0068b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂然三摩地，　　輝焰過眾電，",
        "from": "T18n0850_001:0068b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如淨鏡內，　　幽邃現真容。",
        "from": "T18n0850_001:0068b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜怒顯形色，　　操持與願等，",
        "from": "T18n0850_001:0068b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正受相應身，　　明了心無亂，",
        "from": "T18n0850_001:0068b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無相淨法體，　　應願濟群生，",
        "from": "T18n0850_001:0068c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乳風作四印，　　隨一作成就。",
        "from": "T18n0850_001:0068c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行六月滿，　　輕舉下神通，",
        "from": "T18n0850_001:0068c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住如來鉤。",
        "from": "T18n0850_001:0068c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　布字如下明，火生障聖者，　　無動尊真言如中卷明。",
        "from": "T18n0850_001:0068c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝大毘盧遮那供養方便儀軌卷第一",
        "from": "T18n0850_001:0068c06_100",
        "context_with_next_sentence": false
    }
]