[
    {
        "source_sentence": "智炬陀羅尼經一卷",
        "from": "T21n1397_001:0913c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏法師提雲般若等奉　制譯",
        "from": "T21n1397_001:0913c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛在日月宮中。與無量大菩",
        "from": "T21n1397_001:0913c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩眾俱。",
        "from": "T21n1397_001:0913c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢菩薩文殊師利菩薩。",
        "from": "T21n1397_001:0913c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼自在王菩薩執金剛菩薩。",
        "from": "T21n1397_001:0913c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等菩薩摩訶薩而為上首。",
        "from": "T21n1397_001:0913c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時東方有佛號智炬如來。",
        "from": "T21n1397_001:0913c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方有佛。",
        "from": "T21n1397_001:0913c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號金光聚如來。",
        "from": "T21n1397_001:0913c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方有佛號實語如來。",
        "from": "T21n1397_001:0913c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方有佛號雷音王如來。",
        "from": "T21n1397_001:0913c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各從本國而來此會。",
        "from": "T21n1397_001:0913c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊與諸如來及菩薩眾。",
        "from": "T21n1397_001:0913c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共在金幢樓觀之中。",
        "from": "T21n1397_001:0913c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各坐寶嚴師子之座。",
        "from": "T21n1397_001:0913c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時日月天子來詣佛所。",
        "from": "T21n1397_001:0913c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭頂禮敬諸佛菩薩。",
        "from": "T21n1397_001:0913c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以眾妙物而為供養。",
        "from": "T21n1397_001:0913c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養畢已退坐一面。",
        "from": "T21n1397_001:0913c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相謂言。",
        "from": "T21n1397_001:0913c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等云何從諸如來及菩薩所。",
        "from": "T21n1397_001:0913c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得發起一切眾生光明破諸黑闇滿十方智炬陀羅尼耶。",
        "from": "T21n1397_001:0913c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是陀羅尼力故。",
        "from": "T21n1397_001:0913c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令我等能為眾生作大明炬。",
        "from": "T21n1397_001:0913c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是語時。",
        "from": "T21n1397_001:0913c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸如來及菩薩眾。",
        "from": "T21n1397_001:0913c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即共同聲而說呪曰。",
        "from": "T21n1397_001:0913c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑借音即此字細內之上聲下但有字傍注上去音皆倣此野替音他地反談句一斫芻上達陀句二斫芻上鉢羅婆上句三杜羅米他上句四迦迦之上聲迦音紀伽反羅上他上句五伊上替他止反炭他鄧反下同娑上句六蘇上囉依羅字本音而轉舌呼之呪內有口邊作魯梨履盧邏者皆倣此吒都假反句七蘇上囉拕句八蘇上哆丁佐反娑上句九壹炭娑上句十陛羅上鞞羅鉢膩尼履反下並同句十一遮之箇反嚕沒怛儞句十二阿囉膩阿囉膩句十三迦紀伽反下同羅鉢膩迦羅鉢膩句十四咄嚕杜斯咄嚕杜斯句十五陀蘇上底都履反下並同陀蘇上底句十六地𠼝地𠼝句十七度嚕度嚕句十八度囉度囉句十九迦去羅迦去羅句二十悉他上娑悉他上娑句二十一祇上羅祇上羅句二十二祇羅簸耶以哥反句二十三杜蘇杜蘇句二十四遜杜遜蒲句二十五悉他上蘇案怛蘇句二十六鷖於鷄反闥蘇伊闥娑鉢膩句二十七以竪𠼝句二十八提蘇上𠼝句二十九羯囉羯囉句三十吉𠼝吉𠼝句三十一屈居勿反句內及下句並同嚕屈嚕句三十二屈摩屈摩句三十三羯摩羯摩羯摩鉢膩句三十四計魯計魯句三十五鷄羅鉢膩句三十六羯迦去𠼝羯迦去𠼝句三十七羅嚕勃低句三十八徒嚕低摩訶徒嚕低句三十九羯囉羯囉句四十吉𭌆吉𭌆句四十一必柱斯必柱斯句四十二拕蘇拕蘇句四十三訶上蘇訶上蘇句四十四訶去娑去鉢膩句四十五颯婆去訶句四十六姪怛他句一徒那徵張里反下同摩訶徒那徵句二窣蘇骨反嚕窣嚕句三颯婆去訶句四戍訖羅毘戍達儞句五怛羅怛羅句六颯婆去訶句七樹底鉢囉地篦補奚反句八咄嚧咄嚧句九颯婆去訶句十鉢曇摩摩理儞句十一薩埵顛也反下並同曷囉多勃提徒咨反下並同句十二戶嚧戶嚧句十三颯婆去訶句十四薩埵勃提句十五薩埵盧羯儞句十六咄嚧咄嚧句十七颯婆去訶句十八洛剎拏長聲遏質低句十九杜忙鉢唎訶上𠼝句二十屈音屈申之屈嚧屈嚧句二十一颯婆去訶句二十二馱囉馱囉摩訶馱囉句二十三馱囉馱囉句二十四陀囉衍去底曳句二十五颯婆去訶句二十六蘇跋賴低句二十七蘇答篦句二十八阿上鉢囉底訶多勃提句二十九馱羅馱羅句三十陀羅衍去底曳句三十一颯婆去訶句三十二南無壤奴嗢迦上寫斯舸反下並同怛他揭多上寫句三十三南無蘇跋囉拏鉢囉婆上矩吒暱奴吉反婆上薩寫怛他揭多上寫句三十四南無薩埵婆地那怛他揭多上寫句三十五南無鼻澁摩瑣蘇括反囉揭是多遏囉是瓢薩怛他揭帝瓢句三十六悉殿都漫怛囉鉢馱儞句三十七颯婆去訶句三十八爾時普賢菩薩告日月天子言。",
        "from": "T21n1397_001:0914b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天子此陀羅尼八十八億諸佛如來。",
        "from": "T21n1397_001:0914b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利益諸眾生故之所演說。",
        "from": "T21n1397_001:0914b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天子優曇鉢花猶可易現。",
        "from": "T21n1397_001:0914b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼出現甚難。",
        "from": "T21n1397_001:0914b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天子諸佛出世猶可值遇。",
        "from": "T21n1397_001:0914b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼。",
        "from": "T21n1397_001:0914b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得值甚難。",
        "from": "T21n1397_001:0914b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼猶可易得。",
        "from": "T21n1397_001:0914b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦持之者。",
        "from": "T21n1397_001:0914b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯復轉難。",
        "from": "T21n1397_001:0914b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天子若欲救拔造五逆罪謗正法人。",
        "from": "T21n1397_001:0914b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當受阿毘地獄苦者。",
        "from": "T21n1397_001:0914b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可於閑處淨塗其地隨其所辦種種香花而為供養。",
        "from": "T21n1397_001:0914b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三七日中晝夜六時。",
        "from": "T21n1397_001:0914b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此陀羅尼呪。",
        "from": "T21n1397_001:0914b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是陀羅尼威神力故。",
        "from": "T21n1397_001:0914b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令阿毘地獄應時破壞為百千分。",
        "from": "T21n1397_001:0914b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是中眾生即得解脫。",
        "from": "T21n1397_001:0914b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況有人在於人間而得聞者。",
        "from": "T21n1397_001:0914b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人。",
        "from": "T21n1397_001:0914b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為諸佛及我等菩薩之所護念。",
        "from": "T21n1397_001:0914b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天子於此所說勿生疑惑。",
        "from": "T21n1397_001:0914b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此經已。",
        "from": "T21n1397_001:0914b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月天眾歡喜奉行。",
        "from": "T21n1397_001:0914b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智炬陀羅尼經",
        "from": "T21n1397_001:0914b27_100",
        "context_with_next_sentence": false
    }
]