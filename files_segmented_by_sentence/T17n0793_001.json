[
    {
        "source_sentence": "佛說佛醫經",
        "from": "T17n0793_001:0737a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳天竺沙門竺律炎共支越譯",
        "from": "T17n0793_001:0737a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人身中本有四病：一者、地；二者、水；三者、火；四",
        "from": "T17n0793_001:0737a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "者、風。",
        "from": "T17n0793_001:0737a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風增，氣起；",
        "from": "T17n0793_001:0737a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火增，熱起；",
        "from": "T17n0793_001:0737a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水增，寒起；",
        "from": "T17n0793_001:0737a26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土增，力盛。",
        "from": "T17n0793_001:0737a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本從是四病，起四百四病。",
        "from": "T17n0793_001:0737a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土屬身，水屬口，火屬眼，風屬耳。",
        "from": "T17n0793_001:0737a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火少寒多，目冥。",
        "from": "T17n0793_001:0737a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春正月、二月、三月寒多，夏四月、五月、六月風多，秋七月、八月、九月熱多，冬十月、十一月、十二月有風有寒。",
        "from": "T17n0793_001:0737b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故春寒多？",
        "from": "T17n0793_001:0737b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以萬物皆生，為寒出，故寒多。",
        "from": "T17n0793_001:0737b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故夏風多？",
        "from": "T17n0793_001:0737b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以萬物榮華、陰陽合聚，故風多。",
        "from": "T17n0793_001:0737b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故秋熱多？",
        "from": "T17n0793_001:0737b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以萬物成熟，故熱多。",
        "from": "T17n0793_001:0737b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故冬有風有寒？",
        "from": "T17n0793_001:0737b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以萬物終亡熱去，故有風寒。",
        "from": "T17n0793_001:0737b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三月、四月、五月、六月、七月得臥。",
        "from": "T17n0793_001:0737b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T17n0793_001:0737b06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風多故身放。",
        "from": "T17n0793_001:0737b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八月、九月、十月、十一月、十二月、正月、二月不得臥。",
        "from": "T17n0793_001:0737b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T17n0793_001:0737b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寒多故身縮。",
        "from": "T17n0793_001:0737b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春三月有寒，不得食麥、豆，宜食粳米、醍醐諸熱物。",
        "from": "T17n0793_001:0737b09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夏三月有風，不得食芋、豆、麥，宜食粳米、乳、酪。",
        "from": "T17n0793_001:0737b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秋三月有熱，不得食粳米、醍醐，宜食細米、󰉓、蜜、稻、黍。",
        "from": "T17n0793_001:0737b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冬三月有風寒，陽興陰合，宜食粳米、胡豆、羹、醍醐。",
        "from": "T17n0793_001:0737b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有時臥風起，有時滅；",
        "from": "T17n0793_001:0737b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有時臥火起有時滅。",
        "from": "T17n0793_001:0737b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有寒起有時滅。",
        "from": "T17n0793_001:0737b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人得病有十因緣：",
        "from": "T17n0793_001:0737b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、久坐不飯；",
        "from": "T17n0793_001:0737b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、食無貸；",
        "from": "T17n0793_001:0737b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、憂愁；",
        "from": "T17n0793_001:0737b15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、疲極；",
        "from": "T17n0793_001:0737b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、婬泆；",
        "from": "T17n0793_001:0737b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者、瞋恚；",
        "from": "T17n0793_001:0737b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者、忍大便；",
        "from": "T17n0793_001:0737b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者、忍小便；",
        "from": "T17n0793_001:0737b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者、制上風；",
        "from": "T17n0793_001:0737b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者、制下風。",
        "from": "T17n0793_001:0737b17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是十因緣生病。",
        "from": "T17n0793_001:0737b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言：",
        "from": "T17n0793_001:0737b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有九因緣，命未當盡為橫盡：",
        "from": "T17n0793_001:0737b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、不應飯為飯，二、為不量飯，三、為不習飯，四、為不出生，五、為止熟，六、為不持戒，七、為近惡知識，八、為入里不時不如法行，九、為可避不避。",
        "from": "T17n0793_001:0737b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是九因緣，人命為橫盡。",
        "from": "T17n0793_001:0737b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「不應飯為飯，謂不可意飯，亦謂不隨四時食，亦為以飯復飯，是為不應飯為飯。",
        "from": "T17n0793_001:0737b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不量飯者，謂不知節度，多食過足，是為不量飯。",
        "from": "T17n0793_001:0737b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不習飯者，謂不時食。",
        "from": "T17n0793_001:0737b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若至他郡國，不知俗宜飯食未習，不稍稍飯，是為不習飯。",
        "from": "T17n0793_001:0737b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不出生者，謂飯物未消復上飯，若服藥吐下不盡便食來，是為不出生。",
        "from": "T17n0793_001:0737b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止熟者，謂大便、小便來時不即時行，噫吐、下風來時，制是為止熟。",
        "from": "T17n0793_001:0737c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不持戒者，謂犯五戒，現世間盜，犯他人婦女者，便入縣官，或刻、或死、或得棓榜壓死、若餓死、或得脫外從怨家得首死、或驚怖憂愁死，是為不持戒。",
        "from": "T17n0793_001:0737c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近惡知識者，謂他人作惡便來及人。",
        "from": "T17n0793_001:0737c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T17n0793_001:0737c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離惡知識故。",
        "from": "T17n0793_001:0737c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡人不計當坐之，是為近惡知識。",
        "from": "T17n0793_001:0737c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入里不知時不如法行者，謂晨暮行，亦有魍魎諍鬪者，若有長吏追捕而不避，若入他家舍，妄視不可視、妄聽不可聽、妄犯不可犯、妄念不可念，是為入不知時不如法行。",
        "from": "T17n0793_001:0737c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可避不避者，謂弊牛、馬、狾、狗、蚖、蛇、虫，水、火、坑、穽、犇車、馳馬，拔刀醉人、惡人。",
        "from": "T17n0793_001:0737c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦若干，是為可避不避。",
        "from": "T17n0793_001:0737c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如是九因緣，人命未盡為盡。",
        "from": "T17n0793_001:0737c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黠人當識是，當避是，已避得兩福：",
        "from": "T17n0793_001:0737c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者得長壽，及得聞道好語，亦得久行道。",
        "from": "T17n0793_001:0737c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0793_001:0737c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有四飯：",
        "from": "T17n0793_001:0737c15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、為子飯，二、為三百矛斫飯，三、為皮革虫生出飯，四、為災飯。",
        "from": "T17n0793_001:0737c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子飯者，謂人貪味食肉時，便自校計念：",
        "from": "T17n0793_001:0737c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『是肉皆我前世時父母、兄弟、妻子親屬，亦從是不得脫生死！",
        "from": "T17n0793_001:0737c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』已得是意便止貪，是為子飯。",
        "from": "T17n0793_001:0737c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三百矛斫飯者，謂飯隨味念復念其殃，無有數能不念味便得脫。",
        "from": "T17n0793_001:0737c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又矛斫人為亡身，已生念復念有若干受苦，為三百矛斫飯。",
        "from": "T17n0793_001:0737c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皮革虫生出飯者，謂人念味，亦一切萬物憂家中事，便穿人意，意作萬端為出去，是為皮革虫生飯。",
        "from": "T17n0793_001:0737c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災飯者，謂一生死行皆為災飯，如火燒萬物，人所行皆當來惱身，劇火焚萬物故言災。",
        "from": "T17n0793_001:0737c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以言飯者，謂人所可意念人，故言飯也。",
        "from": "T17n0793_001:0737c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「人食肉譬如食其子，諸畜生皆為我作父母、兄弟、妻子，不可數。",
        "from": "T17n0793_001:0737c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦有六因緣不得食肉：",
        "from": "T17n0793_001:0738a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、莫自殺；",
        "from": "T17n0793_001:0738a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、莫教殺；",
        "from": "T17n0793_001:0738a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、莫與殺同心；",
        "from": "T17n0793_001:0738a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、見殺；",
        "from": "T17n0793_001:0738a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、聞殺；",
        "from": "T17n0793_001:0738a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者、疑為我故殺。",
        "from": "T17n0793_001:0738a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無是六意得食肉，不食者有六疑。",
        "from": "T17n0793_001:0738a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人能不食肉者，得不驚怖福。",
        "from": "T17n0793_001:0738a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0793_001:0738a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「食多有五罪：",
        "from": "T17n0793_001:0738a04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、多睡眠；",
        "from": "T17n0793_001:0738a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、多病；",
        "from": "T17n0793_001:0738a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、多婬；",
        "from": "T17n0793_001:0738a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、不能諷誦經；",
        "from": "T17n0793_001:0738a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、多著世間。",
        "from": "T17n0793_001:0738a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T17n0793_001:0738a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人貪婬、人知色味，瞋恚知橫至味，癡人知飯食味。",
        "from": "T17n0793_001:0738a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《律經》說：",
        "from": "T17n0793_001:0738a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『人貪味，味復味得生不得美味。",
        "from": "T17n0793_001:0738a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」佛言：",
        "from": "T17n0793_001:0738a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「一食者為欲斷生死，亦隨貪不能行道，為得天眼自知所從來生去至何所。",
        "from": "T17n0793_001:0738a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人不念死，多食，常念婦人，皆墮百四十惡，中天皆用飯故。",
        "from": "T17n0793_001:0738a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯十惡後生便失人形，墮畜生中。",
        "from": "T17n0793_001:0738a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既得作人，飢渴血出，瞋恚傍生，於愛內生於貪。",
        "from": "T17n0793_001:0738a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說有大福，自飢以飯與人，令人得命，是為大福。",
        "from": "T17n0793_001:0738a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後生饒飲食，乏瞋恚，亦無所施，施亦不得，但意恣貪婬，亦無所施，但得意恣，非我所有。",
        "from": "T17n0793_001:0738a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一錢以上，不得取故，作貪欲空，自苦作罪。",
        "from": "T17n0793_001:0738a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人不有憂愁，憂隨怒，愁隨貪。",
        "from": "T17n0793_001:0738a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我輩有死歲、有死月、有死日、有死時，亦不知、亦不畏、亦不行道、亦不持戒，東走西走，憂銅憂鐵，憂田宅、奴婢，但益人惱、增人苦，為種畜生習。",
        "from": "T17n0793_001:0738a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0793_001:0738a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「人治生，譬如蜂作蜜。",
        "from": "T17n0793_001:0738a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採取眾華，勤苦積日已成，人便攻取去。",
        "from": "T17n0793_001:0738a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐自苦，不得自給。",
        "from": "T17n0793_001:0738a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人求是念，是憂有憂，無飢渴勤苦。",
        "from": "T17n0793_001:0738a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合聚財物，未死，憂五家分，或水、火、盜賊、縣官、病痛，多不如意。",
        "from": "T17n0793_001:0738a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "己死，他人得之。",
        "from": "T17n0793_001:0738a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身當得其罪，毒痛不可言。",
        "from": "T17n0793_001:0738a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五分者：",
        "from": "T17n0793_001:0738a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、火分；",
        "from": "T17n0793_001:0738a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、水分；",
        "from": "T17n0793_001:0738a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、盜賊分；",
        "from": "T17n0793_001:0738a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、縣官分；",
        "from": "T17n0793_001:0738a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、貧昆弟分。",
        "from": "T17n0793_001:0738a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何為無憂所有？",
        "from": "T17n0793_001:0738a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人不計是五分憂，苦劇不棄，是憂苦有萬端，結在腹中，離道遠法。",
        "from": "T17n0793_001:0738a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人法生賈作，得利，不當喜；",
        "from": "T17n0793_001:0738b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得利，亦不當憂；",
        "from": "T17n0793_001:0738b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是皆前世宿命所致。",
        "from": "T17n0793_001:0738b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人有貪，貪便不得利。",
        "from": "T17n0793_001:0738b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正使得一天下財物，亦不能猛自用之，亦不隨人去，但益人結、但有苦惱、但種後世緣因。",
        "from": "T17n0793_001:0738b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣因如火，如火無所不燒。",
        "from": "T17n0793_001:0738b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我輩不覺，是黠不敢妄搖，知為增苦種罪。",
        "from": "T17n0793_001:0738b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說佛醫經",
        "from": "T17n0793_001:0738b07_100",
        "context_with_next_sentence": false
    }
]