[
    {
        "source_sentence": "金剛頂瑜伽念珠經於十萬廣頌中略出",
        "from": "T17n0789_001:0727c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T17n0789_001:0727c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空謚大鑒",
        "from": "T17n0789_001:0727c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正號大廣智大興善寺三藏沙門不空奉　詔譯爾時，毘盧遮那世尊告金剛手言：",
        "from": "T17n0789_001:0727c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉，善哉！",
        "from": "T17n0789_001:0727c09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸修真言行菩薩者，說諸儀軌則。",
        "from": "T17n0789_001:0727c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀愍未來諸有情等，說念珠功德勝利。",
        "from": "T17n0789_001:0727c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由聞如是妙意趣故，速證悉地。",
        "from": "T17n0789_001:0727c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」時，金剛薩埵菩薩白佛言：",
        "from": "T17n0789_001:0727c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唯然世尊！",
        "from": "T17n0789_001:0727c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為說之。",
        "from": "T17n0789_001:0727c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，金剛薩埵菩薩而說偈言：",
        "from": "T17n0789_001:0727c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「珠表菩薩之勝果，　　於中間絕為斷漏，",
        "from": "T17n0789_001:0727c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繩線貫串表觀音，　　母珠以表無量壽，",
        "from": "T17n0789_001:0727c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎莫驀過越法罪，　　皆由念珠積功德。",
        "from": "T17n0789_001:0727c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "硨渠念珠一倍福；",
        "from": "T17n0789_001:0727c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　木槵念珠兩倍福；",
        "from": "T17n0789_001:0727c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以鐵為珠三倍福；",
        "from": "T17n0789_001:0727c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　熟銅作珠四倍福；",
        "from": "T17n0789_001:0727c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水精真珠及諸寶，　　此等念珠百倍福；",
        "from": "T17n0789_001:0727c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千倍功德帝釋子；",
        "from": "T17n0789_001:0727c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　金剛子珠俱胝福；",
        "from": "T17n0789_001:0727c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮子念珠千俱胝；",
        "from": "T17n0789_001:0727c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　菩提子珠無數福。",
        "from": "T17n0789_001:0727c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部念誦菩提子；",
        "from": "T17n0789_001:0727c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　金剛部法金剛子；",
        "from": "T17n0789_001:0727c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶部念誦以諸寶；",
        "from": "T17n0789_001:0727c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　蓮花部珠用蓮子；",
        "from": "T17n0789_001:0727c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯磨部中為念珠，　　眾珠間雜應貫串。",
        "from": "T17n0789_001:0727c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念珠分別有四種，　　上品最勝及中下，",
        "from": "T17n0789_001:0727c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一千八十以為上，　　一百八珠為最勝，",
        "from": "T17n0789_001:0727c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五十四珠以為中，　　二十七珠為下類。",
        "from": "T17n0789_001:0727c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手持珠當心上，　　靜慮離念心專注，",
        "from": "T17n0789_001:0727c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊瑜伽心一境，　　皆得成就理事法。",
        "from": "T17n0789_001:0728a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設安頂髻或挂身，　　或安頸上及安臂，",
        "from": "T17n0789_001:0728a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說言論成念誦，　　以此念誦淨三業。",
        "from": "T17n0789_001:0728a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由安頂髻淨無間，　　由帶頸上淨四重，",
        "from": "T17n0789_001:0728a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手持臂上除眾罪，　　能令行人速清淨。",
        "from": "T17n0789_001:0728a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修真言陀羅尼，　　念諸如來菩薩名，",
        "from": "T17n0789_001:0728a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲無量勝功德，　　所求勝願皆成就。",
        "from": "T17n0789_001:0728a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」加持念珠貫串之法，一如《蘇悉地經》說。",
        "from": "T17n0789_001:0728a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其瑜伽經但說其功能、理趣，不說相，應知。",
        "from": "T17n0789_001:0728a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛頂瑜伽念珠經",
        "from": "T17n0789_001:0728a10_100",
        "context_with_next_sentence": false
    }
]