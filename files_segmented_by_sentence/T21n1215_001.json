[
    {
        "source_sentence": "大乘方廣曼殊室利菩薩華嚴本",
        "from": "T21n1215_001:0076a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教閻曼德迦忿怒王真言大威德",
        "from": "T21n1215_001:0076a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀軌品第三十",
        "from": "T21n1215_001:0076a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手大藥叉將。",
        "from": "T21n1215_001:0076a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在彼眾會從座而起。",
        "from": "T21n1215_001:0076a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩右膝著地。",
        "from": "T21n1215_001:0076a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛世尊合掌禮敬。",
        "from": "T21n1215_001:0076a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言世尊。",
        "from": "T21n1215_001:0076a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曼殊室利童真不廣說閻曼德迦忿怒王。",
        "from": "T21n1215_001:0076a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀未來有情。",
        "from": "T21n1215_001:0076a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來涅槃後佛教隱滅。",
        "from": "T21n1215_001:0076a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大恐怖末法之時。",
        "from": "T21n1215_001:0076a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無聲聞緣覺遠離佛剎。",
        "from": "T21n1215_001:0076a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護持正法故法界久住故。",
        "from": "T21n1215_001:0076a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "制伏一切難調悖逆偽王故。",
        "from": "T21n1215_001:0076a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不利益三寶者。",
        "from": "T21n1215_001:0076a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩善巧以此不思議法。",
        "from": "T21n1215_001:0076a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治罰調伏滿足故。",
        "from": "T21n1215_001:0076a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不思議法成熟離惡趣故。",
        "from": "T21n1215_001:0076a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛法磨滅時。",
        "from": "T21n1215_001:0076a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令住持佛法者依法教。",
        "from": "T21n1215_001:0076a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦閻曼德迦忿怒王皆悉決定成就。",
        "from": "T21n1215_001:0076b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不益於佛教有情及悖逆偽王。",
        "from": "T21n1215_001:0076b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛教不益者有情。",
        "from": "T21n1215_001:0076b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應用閻曼德迦忿怒王非餘類者。",
        "from": "T21n1215_001:0076b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊默然入遊戲神通加持三昧。",
        "from": "T21n1215_001:0076b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曼殊室利菩薩亦寂默而住。",
        "from": "T21n1215_001:0076b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切集會眾六種震動。",
        "from": "T21n1215_001:0076b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天眾皆悉驚忙惶怖。",
        "from": "T21n1215_001:0076b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天龍阿修羅王。",
        "from": "T21n1215_001:0076b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸母天一切曜等并天人眾。",
        "from": "T21n1215_001:0076b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等震動心生苦惱。",
        "from": "T21n1215_001:0076b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡心布單那暴惡者。",
        "from": "T21n1215_001:0076b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並皆歸依法王教及祕密主藥叉金剛手大威德。",
        "from": "T21n1215_001:0076b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及歸依曼殊室利童真真言三麼耶。",
        "from": "T21n1215_001:0076b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等咸作是言。",
        "from": "T21n1215_001:0076b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曼殊室利願垂哀愍救護。",
        "from": "T21n1215_001:0076b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等被此忿怒真言燒爍。",
        "from": "T21n1215_001:0076b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我輩皆受楚苦悶絕擗地。",
        "from": "T21n1215_001:0076b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時大威德以曼殊室利童子形。",
        "from": "T21n1215_001:0076b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作是言。",
        "from": "T21n1215_001:0076b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天等勿怖　　藥叉羅剎娑",
        "from": "T21n1215_001:0076b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸修羅眾　　我說三昧耶",
        "from": "T21n1215_001:0076b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能違越者　　人非人鬼神",
        "from": "T21n1215_001:0076b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸部多等　　汝等發慈心",
        "from": "T21n1215_001:0076b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸念正等覺　　法王兩足尊",
        "from": "T21n1215_001:0076b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋師子仁王　　彼佛說真言",
        "from": "T21n1215_001:0076b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛頂佛眼等　　於三界中輪",
        "from": "T21n1215_001:0076b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光聚勝高頂　　最勝頂真言",
        "from": "T21n1215_001:0076b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華手觀音　　聖觀自在尊",
        "from": "T21n1215_001:0076b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘俱胝多羅　　名稱明妃尊",
        "from": "T21n1215_001:0076b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白衣及大白　　野輪嚩底時",
        "from": "T21n1215_001:0076b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威德馬頭尊　　蓮華族明王",
        "from": "T21n1215_001:0076b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最勝佛流出　　一字轉輪王",
        "from": "T21n1215_001:0076b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言中主宰　　應念天中天",
        "from": "T21n1215_001:0076b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明主大威猛　　大忿閻曼德",
        "from": "T21n1215_001:0076b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦念觀自在　　從心起悲愍",
        "from": "T21n1215_001:0076b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先佛故宣說　　多羅救有情",
        "from": "T21n1215_001:0076b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在所說　　住悲三麼地",
        "from": "T21n1215_001:0076c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者現女形　　是菩提薩埵",
        "from": "T21n1215_001:0076c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行於菩提行　　於諸千世界",
        "from": "T21n1215_001:0076c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於無數剎　　遊歷諸苦難",
        "from": "T21n1215_001:0076c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔濟諸有情　　持妙色女容",
        "from": "T21n1215_001:0076c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏皆令順　　安立菩提乘",
        "from": "T21n1215_001:0076c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸菩薩說　　應念金剛手",
        "from": "T21n1215_001:0076c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤勇真言王　　持族麼莫鷄",
        "from": "T21n1215_001:0076c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界應供者　　鉤鎖彌佉羅",
        "from": "T21n1215_001:0076c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛拳名稱　　忿怒妙月黶",
        "from": "T21n1215_001:0076c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青棒恐怖形　　如是使者眾",
        "from": "T21n1215_001:0076c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忿怒名天師　　金剛族最勝",
        "from": "T21n1215_001:0076c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若念便加護　　世間中香象",
        "from": "T21n1215_001:0076c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩大威德　　得大勢菩薩",
        "from": "T21n1215_001:0076c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大威德長子　　普賢端嚴尊",
        "from": "T21n1215_001:0076c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時若憶念　　遠離諸恐怖",
        "from": "T21n1215_001:0076c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當常憶念　　寶賢大自在",
        "from": "T21n1215_001:0076c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最勝藥叉王　　聲聞緣覺眾",
        "from": "T21n1215_001:0076c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸皆離諸怖　　若供養彼等",
        "from": "T21n1215_001:0076c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得大加護　　廣果及福生",
        "from": "T21n1215_001:0076c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色無色諸天　　離欲大威德",
        "from": "T21n1215_001:0076c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養三寶者　　淨信於佛教",
        "from": "T21n1215_001:0076c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼皆無所有　　友非友怖畏",
        "from": "T21n1215_001:0076c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則名三昧耶　　諸真言難越",
        "from": "T21n1215_001:0076c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此忿怒中勝　　閻曼德所說",
        "from": "T21n1215_001:0076c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍護諸有情　　一切天人眾",
        "from": "T21n1215_001:0076c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸皆生歡喜　　各住於本誓",
        "from": "T21n1215_001:0076c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子皆稱讚　　聞此凌忽言",
        "from": "T21n1215_001:0076c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥叉主忿怒　　於彼時振動",
        "from": "T21n1215_001:0076c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無數千世界　　忿怒王無益",
        "from": "T21n1215_001:0077a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故諸佛子　　而已先宣說",
        "from": "T21n1215_001:0077a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忿怒王威德　　調伏暴有情",
        "from": "T21n1215_001:0077a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於大眾中　　高聲而告令",
        "from": "T21n1215_001:0077a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言已　　棄擲金剛杵",
        "from": "T21n1215_001:0077a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則彼大威德　　妙音智慧尊",
        "from": "T21n1215_001:0077a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子形嗤誚　　復作如是言",
        "from": "T21n1215_001:0077a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿惡大藥叉　　金剛手威德",
        "from": "T21n1215_001:0077a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所說此聖　　怒王大自此",
        "from": "T21n1215_001:0077a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今授與汝　　恣意而廣說",
        "from": "T21n1215_001:0077a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝豈盡能述　　忿怒王威德",
        "from": "T21n1215_001:0077a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是汝所任持　　如在身中現",
        "from": "T21n1215_001:0077a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝召咸來集　　心明復問答",
        "from": "T21n1215_001:0077a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能現變化　　忿怒阿尾奢",
        "from": "T21n1215_001:0077a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽汝廣宣說　　除捨三摩耶",
        "from": "T21n1215_001:0077a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不澡浴耽眠　　隨順於愛慾",
        "from": "T21n1215_001:0077a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗油貪盥飾　　瞋怒心常恒",
        "from": "T21n1215_001:0077a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄捨勝真言　　不淨信佛教",
        "from": "T21n1215_001:0077a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑惑於正法　　惡行不淨信",
        "from": "T21n1215_001:0077a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於妙法僧寶　　謗毀心散動",
        "from": "T21n1215_001:0077a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穢污於三寶　　非清淨境界",
        "from": "T21n1215_001:0077a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不密真言教　　常穢無哀愍",
        "from": "T21n1215_001:0077a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天室寺道場　　於中穢污行",
        "from": "T21n1215_001:0077a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸類等　　忿怒皆摧壞",
        "from": "T21n1215_001:0077a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破三昧耶禁　　不知相應明",
        "from": "T21n1215_001:0077a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至微虧行　　忿怒皆治罰",
        "from": "T21n1215_001:0077a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人間一切處　　不可免放逸",
        "from": "T21n1215_001:0077a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放逸心染著　　若毀三昧耶",
        "from": "T21n1215_001:0077a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忿怒王得便　　愚夫一切處",
        "from": "T21n1215_001:0077a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順於放逸　　修行真言者",
        "from": "T21n1215_001:0077b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應離欲解脫　　如聲聞緣覺",
        "from": "T21n1215_001:0077b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忿怒王能逼　　曼殊悲愍心",
        "from": "T21n1215_001:0077b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說如是語已　　諸佛難思行",
        "from": "T21n1215_001:0077b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及菩薩大威　　作如是語已",
        "from": "T21n1215_001:0077b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂默而安住爾時吉祥大威德金剛手菩薩。",
        "from": "T21n1215_001:0077b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既蒙印可踊躍歡喜。",
        "from": "T21n1215_001:0077b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復引手捫持金剛杵。",
        "from": "T21n1215_001:0077b08_12",
        "context_with_next_sentence": true
    }
]