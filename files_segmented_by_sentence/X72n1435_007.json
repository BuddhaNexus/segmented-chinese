{
    "X72n1435_007:0266b09_0": "無異禪師廣錄卷第七",
    "X72n1435_007:0266b11_0": "住博山法孫　弘瀚　彚編",
    "X72n1435_007:0266b12_0": "首座法孫　弘裕　同集",
    "X72n1435_007:0266b13_0": "住金陵天界禪寺語錄",
    "X72n1435_007:0266b14_0": "金剛殿拈香。",
    "X72n1435_007:0266b14_1": "三門高聳臨霄漢。",
    "X72n1435_007:0266b14_2": "廓爾方知祖道玄。",
    "X72n1435_007:0266b14_3": "今日脚跟親蹋著。",
    "X72n1435_007:0266b15_4": "優曇花影遍三千。",
    "X72n1435_007:0266b16_0": "天王殿拈香。",
    "X72n1435_007:0266b16_1": "從來願力展慈威。",
    "X72n1435_007:0266b16_2": "爍破虗空毫相輝。",
    "X72n1435_007:0266b16_3": "依正報中誰辯得。",
    "X72n1435_007:0266b17_4": "山頭多見紫雲飛。",
    "X72n1435_007:0266b18_0": "大雄殿拈香。",
    "X72n1435_007:0266b18_1": "黃金殿上三尊佛。",
    "X72n1435_007:0266b18_2": "白玉光中一箇僧。",
    "X72n1435_007:0266b18_3": "正恁麼時何所據。",
    "X72n1435_007:0266b19_4": "香雲旋結萬千層。",
    "X72n1435_007:0266b20_0": "振宗堂據坐。",
    "X72n1435_007:0266b20_1": "寶鏡當臺驗正邪。",
    "X72n1435_007:0266b20_2": "阿誰獨蹈大方家。",
    "X72n1435_007:0266b20_3": "博山手段從來辣。",
    "X72n1435_007:0266b21_4": "客到蒿湯便當茶。",
    "X72n1435_007:0266b22_0": "開堂。",
    "X72n1435_007:0266b22_1": "此一瓣香。",
    "X72n1435_007:0266b22_2": "彌天亘地。",
    "X72n1435_007:0266b22_3": "耀古輝今。",
    "X72n1435_007:0266b22_4": "太極鍾祥。",
    "X72n1435_007:0266b22_5": "乾元衍慶。",
    "X72n1435_007:0266b23_6": "爇向爐中。",
    "X72n1435_007:0266b23_7": "端為供養我明太祖高皇帝成祖文皇帝。",
    "X72n1435_007:0266c01_8": "建立三寶。",
    "X72n1435_007:0266c02_9": "弘通大乘。",
    "X72n1435_007:0266c02_10": "廣化眾生。",
    "X72n1435_007:0266c02_11": "同圓聖智。",
    "X72n1435_007:0266c02_12": "山僧某今日在此法莚。",
    "X72n1435_007:0266c03_13": "一言一句。",
    "X72n1435_007:0266c03_14": "皆從聖恩中流出。",
    "X72n1435_007:0266c04_15": "以海水為墨。",
    "X72n1435_007:0266c04_16": "書其贊辭。",
    "X72n1435_007:0266c04_17": "不能盡其萬一也伏願皇極御天遍。",
    "X72n1435_007:0266c06_18": "大千而廣被聖靈奕世昭。",
    "X72n1435_007:0266c07_19": "萬古以常明此一瓣香。",
    "X72n1435_007:0266c08_20": "靈苗含潤。",
    "X72n1435_007:0266c08_21": "寶樹敷榮。",
    "X72n1435_007:0266c08_22": "景星聚以沐清庥。",
    "X72n1435_007:0266c08_23": "祥雲凝而乘嘉運。",
    "X72n1435_007:0266c09_24": "爇向爐中。",
    "X72n1435_007:0266c09_25": "端為祝延。",
    "X72n1435_007:0266c09_26": "當今皇帝聖壽萬安皇后偕聖壽以無疆太子懋元良而永泰。",
    "X72n1435_007:0266c12_27": "伏願金輪永鎮日。",
    "X72n1435_007:0266c13_28": "新鷲嶺之風。",
    "X72n1435_007:0266c13_29": "寶位增輝時。",
    "X72n1435_007:0266c13_30": "邁唐虞之治。",
    "X72n1435_007:0266c14_0": "此一瓣香。",
    "X72n1435_007:0266c14_1": "萬物毓以生成。",
    "X72n1435_007:0266c14_2": "陰陽恊而秀發。",
    "X72n1435_007:0266c14_3": "為霖現瑞。",
    "X72n1435_007:0266c15_0": "裕國祐民。",
    "X72n1435_007:0266c15_1": "爇向爐中。",
    "X72n1435_007:0266c15_2": "用詶檀護。",
    "X72n1435_007:0266c16_0": "滿朝合郡。",
    "X72n1435_007:0266c16_1": "宰官。",
    "X72n1435_007:0266c16_2": "護法大居士。",
    "X72n1435_007:0266c16_3": "福基祿位。",
    "X72n1435_007:0266c16_4": "咸增性種。",
    "X72n1435_007:0266c16_5": "靈根並茂。",
    "X72n1435_007:0266c18_0": "此一瓣香。",
    "X72n1435_007:0266c18_1": "龍宮湧出。",
    "X72n1435_007:0266c18_2": "鷲嶺拈來。",
    "X72n1435_007:0266c18_3": "輝寶鏡而利益羣生。",
    "X72n1435_007:0266c19_0": "徹重玄而全該正命。",
    "X72n1435_007:0266c19_1": "爇向爐中。",
    "X72n1435_007:0266c19_2": "耑申供養。",
    "X72n1435_007:0266c20_0": "先本師壽昌大和尚。",
    "X72n1435_007:0266c20_1": "用詶法乳之恩。",
    "X72n1435_007:0266c20_2": "斂衣就座。",
    "X72n1435_007:0266c20_3": "白椎竟。",
    "X72n1435_007:0266c21_4": "師乃卓拄杖云諸昆仲。",
    "X72n1435_007:0266c21_5": "達磨大師航海而來。",
    "X72n1435_007:0266c21_6": "直指人心。",
    "X72n1435_007:0266c22_7": "見性成佛。",
    "X72n1435_007:0266c22_8": "雖則門庭萬仞。",
    "X72n1435_007:0266c22_9": "壁立千層。",
    "X72n1435_007:0266c22_10": "祇演一心之法。",
    "X72n1435_007:0266c23_11": "更無餘事。",
    "X72n1435_007:0266c23_12": "乃至六祖傳衣。",
    "X72n1435_007:0266c23_13": "五宗競出。",
    "X72n1435_007:0266c23_14": "運無礙輪化無緣眾。",
    "X72n1435_007:0266c24_15": "祇演一心之法。",
    "X72n1435_007:0266c24_16": "更無餘事。",
    "X72n1435_007:0266c24_17": "溈山大師敲唱同時。",
    "X72n1435_007:0267a01_18": "暗機圓合。",
    "X72n1435_007:0267a01_19": "傾瓶以辯超方。",
    "X72n1435_007:0267a01_20": "撼茶而彰妙用。",
    "X72n1435_007:0267a01_21": "祇演一心之法。",
    "X72n1435_007:0267a02_22": "更無餘事。",
    "X72n1435_007:0267a02_23": "雲門大師箭鋒相拄。",
    "X72n1435_007:0267a02_24": "函葢乾坤。",
    "X72n1435_007:0267a03_0": "揚眉落臼。",
    "X72n1435_007:0267a03_1": "顧盼猶遲。",
    "X72n1435_007:0267a03_2": "如流雲翔鶴。",
    "X72n1435_007:0267a03_3": "湛水晴空。",
    "X72n1435_007:0267a03_4": "祇演一心之法。",
    "X72n1435_007:0267a04_5": "更無餘事。",
    "X72n1435_007:0267a04_6": "法眼大師。",
    "X72n1435_007:0267a04_7": "拈現前石。",
    "X72n1435_007:0267a04_8": "塞虗空口。",
    "X72n1435_007:0267a04_9": "一切處現成。",
    "X72n1435_007:0267a05_10": "六根互用。",
    "X72n1435_007:0267a05_11": "六用齊施。",
    "X72n1435_007:0267a05_12": "祇演一心之法。",
    "X72n1435_007:0267a05_13": "更無餘事。",
    "X72n1435_007:0267a06_14": "臨濟大師一語中具三玄。",
    "X72n1435_007:0267a06_15": "一玄中具三要。",
    "X72n1435_007:0267a06_16": "驅耕夫牛。",
    "X72n1435_007:0267a07_17": "奪饑人食。",
    "X72n1435_007:0267a07_18": "電光石火。",
    "X72n1435_007:0267a07_19": "開眼猶迷。",
    "X72n1435_007:0267a07_20": "祇演一心之法。",
    "X72n1435_007:0267a08_0": "更無餘事。",
    "X72n1435_007:0267a08_1": "洞山大師混不得。",
    "X72n1435_007:0267a08_2": "類不齊。",
    "X72n1435_007:0267a08_3": "立寶鏡三昧。",
    "X72n1435_007:0267a08_4": "炤學者肺肝。",
    "X72n1435_007:0267a09_5": "分五湖玉石。",
    "X72n1435_007:0267a09_6": "雪盛銀盌。",
    "X72n1435_007:0267a09_7": "月炤金沙。",
    "X72n1435_007:0267a09_8": "祇演一心之法。",
    "X72n1435_007:0267a10_9": "更無餘事。",
    "X72n1435_007:0267a10_10": "乃至博山。",
    "X72n1435_007:0267a10_11": "今日遠承諸祖慈蔭。",
    "X72n1435_007:0267a10_12": "循規蹈矩。",
    "X72n1435_007:0267a11_13": "借路還家。",
    "X72n1435_007:0267a11_14": "駕輕就熟。",
    "X72n1435_007:0267a11_15": "祇演一心之法。",
    "X72n1435_007:0267a11_16": "更無餘事。",
    "X72n1435_007:0267a12_17": "諸昆仲含靈具此一心之法。",
    "X72n1435_007:0267a12_18": "學人欲明此一心之法。",
    "X72n1435_007:0267a13_19": "三世諸佛。",
    "X72n1435_007:0267a13_20": "歷代祖師。",
    "X72n1435_007:0267a13_21": "示此一心之法故。",
    "X72n1435_007:0267a13_22": "楞伽經云。",
    "X72n1435_007:0267a14_0": "佛語心為宗。",
    "X72n1435_007:0267a14_1": "無門為法門。",
    "X72n1435_007:0267a14_2": "諸昆仲大地沒遮攔。",
    "X72n1435_007:0267a14_3": "要行行不去。",
    "X72n1435_007:0267a15_4": "要住住不得。",
    "X72n1435_007:0267a15_5": "且道。",
    "X72n1435_007:0267a15_6": "向甚麼處出氣。",
    "X72n1435_007:0267a15_7": "還知麼。",
    "X72n1435_007:0267a15_8": "鳥鳴雲樹。",
    "X72n1435_007:0267a16_9": "聲聲喚遊子歸家。",
    "X72n1435_007:0267a16_10": "魚躍煙波。",
    "X72n1435_007:0267a16_11": "色色翻誌公陳案。",
    "X72n1435_007:0267a17_12": "漩澓空中梵字。",
    "X72n1435_007:0267a17_13": "刮開眼底重朦。",
    "X72n1435_007:0267a17_14": "且道。",
    "X72n1435_007:0267a17_15": "向甚麼處。",
    "X72n1435_007:0267a17_16": "認取自家心地。",
    "X72n1435_007:0267a18_17": "卓拄杖云。",
    "X72n1435_007:0267a18_18": "鼻根浮面上。",
    "X72n1435_007:0267a18_19": "更不用躊蹰。",
    "X72n1435_007:0267a18_20": "珍重。",
    "X72n1435_007:0267a20_0": "當晚小參。",
    "X72n1435_007:0267a20_1": "南嶽大師云。",
    "X72n1435_007:0267a20_2": "一切萬法皆從心生。",
    "X72n1435_007:0267a20_3": "心無所生。",
    "X72n1435_007:0267a21_4": "法無能住。",
    "X72n1435_007:0267a21_5": "若達心地。",
    "X72n1435_007:0267a21_6": "所作無礙。",
    "X72n1435_007:0267a21_7": "諸昆仲心無所生。",
    "X72n1435_007:0267a22_0": "山河大地。",
    "X72n1435_007:0267a22_1": "從甚麼處得來。",
    "X72n1435_007:0267a22_2": "法無能住。",
    "X72n1435_007:0267a22_3": "終日著衣喫飯。",
    "X72n1435_007:0267a23_0": "因甚麼只認定著箇自己。",
    "X72n1435_007:0267a23_1": "去此二途。",
    "X72n1435_007:0267a23_2": "作麼生折合。",
    "X72n1435_007:0267a23_3": "諸人分上。",
    "X72n1435_007:0267a24_4": "也須自看。",
    "X72n1435_007:0267a24_5": "有人通得消息。",
    "X72n1435_007:0267a24_6": "博山將袈裟。",
    "X72n1435_007:0267a24_7": "以覆之。",
    "X72n1435_007:0267b02_0": "魏國徐六翁居士誕日。",
    "X72n1435_007:0267b02_1": "請上堂。",
    "X72n1435_007:0267b02_2": "因緣所生法。",
    "X72n1435_007:0267b02_3": "莊嚴世間相。",
    "X72n1435_007:0267b03_4": "了彼性空者。",
    "X72n1435_007:0267b03_5": "斯人具正眼。",
    "X72n1435_007:0267b03_6": "諸昆仲心本無生。",
    "X72n1435_007:0267b03_7": "從緣有生。",
    "X72n1435_007:0267b04_8": "生緣勝故。",
    "X72n1435_007:0267b04_9": "佛種亦勝。",
    "X72n1435_007:0267b04_10": "法華經云。",
    "X72n1435_007:0267b04_11": "佛種從緣起。",
    "X72n1435_007:0267b05_0": "是故說一乘。",
    "X72n1435_007:0267b05_1": "作麼生是說一乘底道理。",
    "X72n1435_007:0267b05_2": "諸昆仲毫端斂法界之方。",
    "X72n1435_007:0267b06_3": "滴水含滄海之濶。",
    "X72n1435_007:0267b06_4": "無明全諸佛之智。",
    "X72n1435_007:0267b06_5": "藏識潛增上之緣。",
    "X72n1435_007:0267b07_6": "理應箭鋒。",
    "X72n1435_007:0267b07_7": "事存函葢。",
    "X72n1435_007:0267b07_8": "不可以思議而得之者也。",
    "X72n1435_007:0267b08_9": "諸昆仲茲因魏國六翁老居士華筵大誕之辰。",
    "X72n1435_007:0267b09_10": "合郡眾居士。",
    "X72n1435_007:0267b09_11": "於濟生菴中。",
    "X72n1435_007:0267b09_12": "設此無遮大會。",
    "X72n1435_007:0267b09_13": "為六翁居士祝壽。",
    "X72n1435_007:0267b10_14": "且道。",
    "X72n1435_007:0267b10_15": "將何為祝耶。",
    "X72n1435_007:0267b10_16": "須彌耶。",
    "X72n1435_007:0267b10_17": "滄海耶。",
    "X72n1435_007:0267b10_18": "大地耶。",
    "X72n1435_007:0267b11_19": "草木叢林耶。",
    "X72n1435_007:0267b11_20": "若以須彌為壽。",
    "X72n1435_007:0267b11_21": "須彌高而有頂。",
    "X72n1435_007:0267b11_22": "若以滄海為壽。",
    "X72n1435_007:0267b12_23": "滄海深而有源。",
    "X72n1435_007:0267b12_24": "若以大地為壽。",
    "X72n1435_007:0267b12_25": "大地厚而有輪。",
    "X72n1435_007:0267b13_26": "若以草木叢林為壽。",
    "X72n1435_007:0267b13_27": "草木叢林多而有盡。",
    "X72n1435_007:0267b13_28": "惟以吾大圓覺中。",
    "X72n1435_007:0267b14_29": "華藏界內。",
    "X72n1435_007:0267b14_30": "香雲。",
    "X72n1435_007:0267b14_31": "花雲。",
    "X72n1435_007:0267b14_32": "幢幡雲。",
    "X72n1435_007:0267b14_33": "音樂雲。",
    "X72n1435_007:0267b14_34": "寶葢雲。",
    "X72n1435_007:0267b15_35": "若舉一。",
    "X72n1435_007:0267b15_36": "若舉二。",
    "X72n1435_007:0267b15_37": "若舉百。",
    "X72n1435_007:0267b15_38": "若舉千。",
    "X72n1435_007:0267b15_39": "乃至百千萬億數中。",
    "X72n1435_007:0267b16_40": "隨拈一微塵許。",
    "X72n1435_007:0267b16_41": "皆與有情無情等。",
    "X72n1435_007:0267b16_42": "與毗盧遮那等。",
    "X72n1435_007:0267b17_43": "皆可為居士祝壽也。",
    "X72n1435_007:0267b17_44": "雖然如是。",
    "X72n1435_007:0267b17_45": "不免為居士傍通箇消息。",
    "X72n1435_007:0267b18_46": "作麼是傍通底消息。",
    "X72n1435_007:0267b18_47": "華藏界中纔一念。",
    "X72n1435_007:0267b18_48": "閻浮早已萬千年。",
    "X72n1435_007:0267b19_49": "珍重。",
    "X72n1435_007:0267b19_50": "僧問。",
    "X72n1435_007:0267b19_51": "如何是無量壽。",
    "X72n1435_007:0267b19_52": "師云。",
    "X72n1435_007:0267b19_53": "烏龍潭上浪滔天。",
    "X72n1435_007:0267b20_54": "進云。",
    "X72n1435_007:0267b20_55": "恁麼則有量也。",
    "X72n1435_007:0267b20_56": "師云。",
    "X72n1435_007:0267b20_57": "天池一滴水。",
    "X72n1435_007:0267b20_58": "怎與眾同流。",
    "X72n1435_007:0267b21_59": "茹居士問。",
    "X72n1435_007:0267b21_60": "向上一著如何道。",
    "X72n1435_007:0267b21_61": "師云石頭城外垂楊柳。",
    "X72n1435_007:0267b22_62": "進云。",
    "X72n1435_007:0267b22_63": "者是眾生眼。",
    "X72n1435_007:0267b22_64": "如何是和尚眼。",
    "X72n1435_007:0267b22_65": "師云。",
    "X72n1435_007:0267b22_66": "吹盡殘花色愈鮮。",
    "X72n1435_007:0267b23_67": "進云。",
    "X72n1435_007:0267b23_68": "某甲參學二十年。",
    "X72n1435_007:0267b23_69": "今日學得一拜。",
    "X72n1435_007:0267b24_70": "師云。",
    "X72n1435_007:0267b24_71": "三十棒。",
    "X72n1435_007:0267b24_72": "且待別時。",
    "X72n1435_007:0267c01_0": "皖上吳盛二居士。",
    "X72n1435_007:0267c01_1": "就濟生菴請。",
    "X72n1435_007:0267c01_2": "上堂。",
    "X72n1435_007:0267c01_3": "博山三年前。",
    "X72n1435_007:0267c01_4": "回桑梓為桑梓。",
    "X72n1435_007:0267c02_5": "諸親友演箇還鄉曲子。",
    "X72n1435_007:0267c02_6": "眾中有聞名者。",
    "X72n1435_007:0267c03_0": "聽音聲者。",
    "X72n1435_007:0267c03_1": "見形影者。",
    "X72n1435_007:0267c03_2": "摩皮膚者。",
    "X72n1435_007:0267c03_3": "契心髓者。",
    "X72n1435_007:0267c03_4": "復有進其門。",
    "X72n1435_007:0267c04_5": "升其堂。",
    "X72n1435_007:0267c04_6": "入其室者。",
    "X72n1435_007:0267c04_7": "倐忽三載。",
    "X72n1435_007:0267c04_8": "若剎那際。",
    "X72n1435_007:0267c04_9": "今眾居士。",
    "X72n1435_007:0267c05_0": "復以幣帛見召。",
    "X72n1435_007:0267c05_1": "博山雖在他方千萬里外。",
    "X72n1435_007:0267c05_2": "其實寸步。",
    "X72n1435_007:0267c06_0": "未曾離故鄉田地。",
    "X72n1435_007:0267c06_1": "諸昆仲。",
    "X72n1435_007:0267c06_2": "龍眠靄靄。",
    "X72n1435_007:0267c06_3": "紫金足下。",
    "X72n1435_007:0267c06_4": "雲生浮渡。",
    "X72n1435_007:0267c07_5": "滔滔鍾阜。",
    "X72n1435_007:0267c07_6": "山中水溢。",
    "X72n1435_007:0267c07_7": "析毫端而含剎土。",
    "X72n1435_007:0267c07_8": "懸慧鏡以辯方來。",
    "X72n1435_007:0267c08_9": "誌公剪尺尚存。",
    "X72n1435_007:0267c08_10": "投子油瓶現在。",
    "X72n1435_007:0267c08_11": "然雖如是。",
    "X72n1435_007:0267c09_0": "也要眾居士見其面孔。",
    "X72n1435_007:0267c09_1": "聽其法句始得。",
    "X72n1435_007:0267c09_2": "且道。",
    "X72n1435_007:0267c09_3": "是何法句。",
    "X72n1435_007:0267c10_4": "卓拄杖云。",
    "X72n1435_007:0267c10_5": "諦聽諦聽。",
    "X72n1435_007:0267c11_0": "余集生任文升二居士請。",
    "X72n1435_007:0267c11_1": "上堂。",
    "X72n1435_007:0267c11_2": "道不屬知。",
    "X72n1435_007:0267c11_3": "不屬不知。",
    "X72n1435_007:0267c12_0": "知是妄覺。",
    "X72n1435_007:0267c12_1": "不知是無記。",
    "X72n1435_007:0267c12_2": "只饒坐斷兩頭。",
    "X72n1435_007:0267c12_3": "更須知有向上事始得。",
    "X72n1435_007:0267c13_4": "諸昆仲若論向上事。",
    "X72n1435_007:0267c13_5": "諸人分上。",
    "X72n1435_007:0267c13_6": "一一天真。",
    "X72n1435_007:0267c14_0": "一一靈明。",
    "X72n1435_007:0267c14_1": "一一具足。",
    "X72n1435_007:0267c14_2": "上至諸佛。",
    "X72n1435_007:0267c14_3": "下至含靈。",
    "X72n1435_007:0267c14_4": "各各不欠缺纖毫。",
    "X72n1435_007:0267c15_5": "是以余集生任文升二居士。",
    "X72n1435_007:0267c15_6": "同合郡大居士。",
    "X72n1435_007:0267c16_0": "向者裏設無上玅供。",
    "X72n1435_007:0267c16_1": "運同體大悲。",
    "X72n1435_007:0267c16_2": "救砧几眾生。",
    "X72n1435_007:0267c16_3": "解籠檻囚縶。",
    "X72n1435_007:0267c17_4": "飛者適霄漢。",
    "X72n1435_007:0267c17_5": "走者縱山林。",
    "X72n1435_007:0267c17_6": "潛者躍深淵。",
    "X72n1435_007:0267c17_7": "以無功之功。",
    "X72n1435_007:0267c18_8": "無行之行。",
    "X72n1435_007:0267c18_9": "於無眾生界中。",
    "X72n1435_007:0267c18_10": "解脫鏡像有情。",
    "X72n1435_007:0267c18_11": "諸昆仲青山挺秀。",
    "X72n1435_007:0267c19_12": "流鶯囀樹裏之聲。",
    "X72n1435_007:0267c19_13": "綠水瀰漫。",
    "X72n1435_007:0267c19_14": "躍鯉現波中之色。",
    "X72n1435_007:0267c20_15": "昧真常於山水。",
    "X72n1435_007:0267c20_16": "迷現量於飛潛。",
    "X72n1435_007:0267c20_17": "大似陽燄翻波。",
    "X72n1435_007:0267c21_18": "渾成戲論。",
    "X72n1435_007:0267c21_19": "諸昆仲還識得麼。",
    "X72n1435_007:0267c21_20": "若能返照。",
    "X72n1435_007:0267c21_21": "直下逢渠。",
    "X72n1435_007:0267c22_22": "舉措施為。",
    "X72n1435_007:0267c22_23": "無虧實相。",
    "X72n1435_007:0267c22_24": "卓拄杖。",
    "X72n1435_007:0267c22_25": "下座。",
    "X72n1435_007:0267c23_0": "上堂。",
    "X72n1435_007:0267c23_1": "洞山大師悟道偈云。",
    "X72n1435_007:0267c23_2": "切忌從他覓。",
    "X72n1435_007:0267c23_3": "迢迢與我疎。",
    "X72n1435_007:0267c24_0": "我今獨自往。",
    "X72n1435_007:0267c24_1": "處處得逢渠。",
    "X72n1435_007:0267c24_2": "渠今正是我。",
    "X72n1435_007:0267c24_3": "我今不是渠。",
    "X72n1435_007:0268a01_0": "若能如是會。",
    "X72n1435_007:0268a01_1": "方得契如如。",
    "X72n1435_007:0268a01_2": "此是洞山宗旨。",
    "X72n1435_007:0268a01_3": "綿密回互。",
    "X72n1435_007:0268a02_0": "皆從此偈中流出。",
    "X72n1435_007:0268a02_1": "不可不理會。",
    "X72n1435_007:0268a02_2": "諸昆仲此偈中有二句最嚴。",
    "X72n1435_007:0268a03_3": "渠今正是我。",
    "X72n1435_007:0268a03_4": "我今不是渠。",
    "X72n1435_007:0268a03_5": "渠者何物也。",
    "X72n1435_007:0268a03_6": "而正是我。",
    "X72n1435_007:0268a04_7": "我者復何物也。",
    "X72n1435_007:0268a04_8": "而不是渠。",
    "X72n1435_007:0268a04_9": "且道。",
    "X72n1435_007:0268a04_10": "是一箇是兩箇。",
    "X72n1435_007:0268a05_0": "若向者裏會去。",
    "X72n1435_007:0268a05_1": "始可有參學分。",
    "X72n1435_007:0268a05_2": "須知。",
    "X72n1435_007:0268a05_3": "此偈豈但曹洞宗旨。",
    "X72n1435_007:0268a06_4": "即五家應機接物。",
    "X72n1435_007:0268a06_5": "皆當向此句中印過始得。",
    "X72n1435_007:0268a06_6": "不然。",
    "X72n1435_007:0268a07_7": "在一機一境上。",
    "X72n1435_007:0268a07_8": "得些子解路。",
    "X72n1435_007:0268a07_9": "盡是掠虗頭漢。",
    "X72n1435_007:0268a07_10": "有甚麼話會處。",
    "X72n1435_007:0268a08_11": "所以曹洞有三種滲漏。",
    "X72n1435_007:0268a08_12": "一者見滲漏。",
    "X72n1435_007:0268a08_13": "機不離位。",
    "X72n1435_007:0268a09_14": "墮在毒海。",
    "X72n1435_007:0268a09_15": "此不離即毒海也。",
    "X72n1435_007:0268a09_16": "二者情滲漏。",
    "X72n1435_007:0268a09_17": "情存向背。",
    "X72n1435_007:0268a10_18": "見處偏枯。",
    "X72n1435_007:0268a10_19": "此向背即偏枯也。",
    "X72n1435_007:0268a10_20": "三者語滲漏。",
    "X72n1435_007:0268a10_21": "體妙失宗。",
    "X72n1435_007:0268a11_22": "機昧終始。",
    "X72n1435_007:0268a11_23": "此體妙即機昧也。",
    "X72n1435_007:0268a11_24": "若據此三種滲漏。",
    "X72n1435_007:0268a12_0": "學者明晦。",
    "X72n1435_007:0268a12_1": "如見肺肝。",
    "X72n1435_007:0268a12_2": "所以博山舉眼無人。",
    "X72n1435_007:0268a12_3": "非敢以生滅。",
    "X72n1435_007:0268a13_4": "勘驗諸方。",
    "X72n1435_007:0268a13_5": "若見徹此偈。",
    "X72n1435_007:0268a13_6": "洞山大師未曾入滅。",
    "X72n1435_007:0268a13_7": "博山雖在今時。",
    "X72n1435_007:0268a14_8": "亦不諳今時事。",
    "X72n1435_007:0268a14_9": "祇與諸人。",
    "X72n1435_007:0268a14_10": "二時逐隊。",
    "X72n1435_007:0268a14_11": "諸昆仲古木叢中躑躅。",
    "X72n1435_007:0268a15_12": "漏逗法身。",
    "X72n1435_007:0268a15_13": "大洋海底翻騰。",
    "X72n1435_007:0268a15_14": "侵損漁父。",
    "X72n1435_007:0268a16_15": "徹見本來面目。",
    "X72n1435_007:0268a16_16": "野雲散而天青。",
    "X72n1435_007:0268a16_17": "掀開煩熱胸襟。",
    "X72n1435_007:0268a16_18": "衣線綻而體露。",
    "X72n1435_007:0268a17_19": "還有與洞山大師共出一隻手者麼。",
    "X72n1435_007:0268a17_20": "卓拄杖云。",
    "X72n1435_007:0268a18_21": "舉頭天外看。",
    "X72n1435_007:0268a18_22": "誰似我般人。",
    "X72n1435_007:0268a18_23": "僧問。",
    "X72n1435_007:0268a18_24": "如何是和尚底具眼處。",
    "X72n1435_007:0268a19_25": "師云。",
    "X72n1435_007:0268a19_26": "善世橋邊逢　聖主。",
    "X72n1435_007:0268a19_27": "進云。",
    "X72n1435_007:0268a19_28": "未是和尚具眼處。",
    "X72n1435_007:0268a20_29": "師云。",
    "X72n1435_007:0268a20_30": "三十棒趂出。",
    "X72n1435_007:0268a20_31": "僧一喝。",
    "X72n1435_007:0268a20_32": "師云者一喝落在甚處。",
    "X72n1435_007:0268a21_33": "僧無語。",
    "X72n1435_007:0268a21_34": "師直打。",
    "X72n1435_007:0268a21_35": "出法堂。",
    "X72n1435_007:0268a22_0": "上堂。",
    "X72n1435_007:0268a22_1": "如何是佛。",
    "X72n1435_007:0268a22_2": "十方世界最靈物。",
    "X72n1435_007:0268a22_3": "如何是法。",
    "X72n1435_007:0268a22_4": "古路迢迢苔蘚滑。",
    "X72n1435_007:0268a23_5": "仍將佛法問根源。",
    "X72n1435_007:0268a23_6": "雲散長空鶴唳天。",
    "X72n1435_007:0268a23_7": "纖塵不立清如洗。",
    "X72n1435_007:0268a24_8": "三箇猢猻夜簸錢。",
    "X72n1435_007:0268a24_9": "諸昆仲宗門中事。",
    "X72n1435_007:0268a24_10": "豈同容易一言一句。",
    "X72n1435_007:0268b01_11": "一大藏教註不破。",
    "X72n1435_007:0268b01_12": "歷代祖師機深智廣。",
    "X72n1435_007:0268b02_13": "潛興密運須彌倒。",
    "X72n1435_007:0268b02_14": "卓拄杖橫趨。",
    "X72n1435_007:0268b02_15": "繪彩色於空中。",
    "X72n1435_007:0268b03_0": "擲大千於方外。",
    "X72n1435_007:0268b03_1": "且道向甚麼處捫摸。",
    "X72n1435_007:0268b03_2": "所以云。",
    "X72n1435_007:0268b03_3": "羅籠不肯住。",
    "X72n1435_007:0268b04_4": "呼喚不回頭。",
    "X72n1435_007:0268b04_5": "古聖不安排。",
    "X72n1435_007:0268b04_6": "至今無處所。",
    "X72n1435_007:0268b04_7": "玄沙大師恁麼老婆心切。",
    "X72n1435_007:0268b05_8": "也只要諸人知箇落處始得。",
    "X72n1435_007:0268b05_9": "諸昆仲青黯黯處。",
    "X72n1435_007:0268b06_10": "樵子不借路以還家。",
    "X72n1435_007:0268b06_11": "綿密密時。",
    "X72n1435_007:0268b06_12": "機婦罷金針而夜織。",
    "X72n1435_007:0268b07_13": "香銷錦帳。",
    "X72n1435_007:0268b07_14": "露浥芙蓉。",
    "X72n1435_007:0268b07_15": "發清嘯於深閨。",
    "X72n1435_007:0268b07_16": "吐微言於連枕。",
    "X72n1435_007:0268b08_17": "情濃意洽。",
    "X72n1435_007:0268b08_18": "試問。",
    "X72n1435_007:0268b08_19": "諸昆仲還知得也無。",
    "X72n1435_007:0268b08_20": "良久云。",
    "X72n1435_007:0268b09_21": "分明一段風流事。",
    "X72n1435_007:0268b09_22": "不與諸人較短長。",
    "X72n1435_007:0268b10_0": "上堂。",
    "X72n1435_007:0268b10_1": "南陽忠國師云。",
    "X72n1435_007:0268b10_2": "青蘿夤緣。",
    "X72n1435_007:0268b10_3": "直上寒松之頂。",
    "X72n1435_007:0268b10_4": "白雲淡泞。",
    "X72n1435_007:0268b11_5": "出沒太虗之中。",
    "X72n1435_007:0268b11_6": "萬法本閒。",
    "X72n1435_007:0268b11_7": "而人自閙。",
    "X72n1435_007:0268b11_8": "諸昆仲作麼生說。",
    "X72n1435_007:0268b12_9": "箇本閒底法。",
    "X72n1435_007:0268b12_10": "若會得本閒法。",
    "X72n1435_007:0268b12_11": "則大千世界有情無情等。",
    "X72n1435_007:0268b13_12": "無纖毫閙相。",
    "X72n1435_007:0268b13_13": "若有纖毫閙相者。",
    "X72n1435_007:0268b13_14": "則不得本閒法也。",
    "X72n1435_007:0268b14_15": "何以故。",
    "X72n1435_007:0268b14_16": "閙即法故。",
    "X72n1435_007:0268b14_17": "所以道。",
    "X72n1435_007:0268b14_18": "靜則埋根千尺。",
    "X72n1435_007:0268b14_19": "動則當處生苗。",
    "X72n1435_007:0268b15_20": "只饒不動不靜。",
    "X72n1435_007:0268b15_21": "未免飄飄搖搖。",
    "X72n1435_007:0268b15_22": "博山則不然。",
    "X72n1435_007:0268b16_23": "動則寒氷凝結。",
    "X72n1435_007:0268b16_24": "靜則白浪滔天。",
    "X72n1435_007:0268b16_25": "直下了無動靜。",
    "X72n1435_007:0268b17_0": "紅爐片雪如綿。",
    "X72n1435_007:0268b17_1": "若於此二偈中會去。",
    "X72n1435_007:0268b17_2": "始明得本閒法也。",
    "X72n1435_007:0268b18_3": "諸昆仲動非動相。",
    "X72n1435_007:0268b18_4": "雖動極以恒安。",
    "X72n1435_007:0268b18_5": "靜復靜元。",
    "X72n1435_007:0268b18_6": "總靜機而常運。",
    "X72n1435_007:0268b19_7": "秉常運之樞機。",
    "X72n1435_007:0268b19_8": "履恒安之玄軌。",
    "X72n1435_007:0268b19_9": "寶鏡懸而無隱慝。",
    "X72n1435_007:0268b20_10": "珠簾捲以納方來。",
    "X72n1435_007:0268b20_11": "不涉呼吸之離微。",
    "X72n1435_007:0268b20_12": "寧有去來之蹤跡。",
    "X72n1435_007:0268b21_13": "諸昆仲順則吉也。",
    "X72n1435_007:0268b21_14": "逆則忤也。",
    "X72n1435_007:0268b21_15": "肯則自許也。",
    "X72n1435_007:0268b22_0": "若於靜閙親疎。",
    "X72n1435_007:0268b22_1": "而較其優劣者。",
    "X72n1435_007:0268b22_2": "盡其恒沙思量分別。",
    "X72n1435_007:0268b23_0": "莫能得其量也。",
    "X72n1435_007:0268b23_1": "卓拄杖。",
    "X72n1435_007:0268b23_2": "下座。",
    "X72n1435_007:0268b24_0": "上堂。",
    "X72n1435_007:0268b24_1": "僧問。",
    "X72n1435_007:0268b24_2": "古德撥塵見佛時如何。",
    "X72n1435_007:0268b24_3": "直須揮劒。",
    "X72n1435_007:0268b24_4": "若不揮劍。",
    "X72n1435_007:0268c01_5": "漁父棲巢。",
    "X72n1435_007:0268c01_6": "又僧問。",
    "X72n1435_007:0268c01_7": "古德撥塵見佛時如何。",
    "X72n1435_007:0268c01_8": "渠無國土。",
    "X72n1435_007:0268c02_9": "何處逢渠。",
    "X72n1435_007:0268c02_10": "二大老各道得一邊。",
    "X72n1435_007:0268c02_11": "一箇則門庭施設。",
    "X72n1435_007:0268c03_0": "輝煌掌上之珠。",
    "X72n1435_007:0268c03_1": "一箇則入理深談。",
    "X72n1435_007:0268c03_2": "擊碎秦時之鏡。",
    "X72n1435_007:0268c03_3": "若是博山則不然。",
    "X72n1435_007:0268c04_4": "有問。",
    "X72n1435_007:0268c04_5": "撥塵見佛時如何。",
    "X72n1435_007:0268c04_6": "紺髮旋螺髻兜綿。",
    "X72n1435_007:0268c05_7": "印手文學人不會。",
    "X72n1435_007:0268c05_8": "意旨如何。",
    "X72n1435_007:0268c05_9": "青蓮捧雙足。",
    "X72n1435_007:0268c05_10": "赤肉挂金襴。",
    "X72n1435_007:0268c06_11": "且道。",
    "X72n1435_007:0268c06_12": "與古人是同是別。",
    "X72n1435_007:0268c06_13": "若說是同。",
    "X72n1435_007:0268c06_14": "作麼生說箇同底道理。",
    "X72n1435_007:0268c07_15": "若說是別。",
    "X72n1435_007:0268c07_16": "作麼生說箇別底道理。",
    "X72n1435_007:0268c07_17": "若向者裏融會得去。",
    "X72n1435_007:0268c08_18": "博山與汝結箇同參。",
    "X72n1435_007:0268c08_19": "諸昆仲。",
    "X72n1435_007:0268c08_20": "居正而不立正位。",
    "X72n1435_007:0268c09_21": "泥牛吼海岸之風。",
    "X72n1435_007:0268c09_22": "垂偏而不住偏方。",
    "X72n1435_007:0268c09_23": "石女弄珊瑚之影。",
    "X72n1435_007:0268c10_24": "乞食於三家村裏。",
    "X72n1435_007:0268c10_25": "謳歌於萬仞峯頭。",
    "X72n1435_007:0268c10_26": "借松鏡以瀉清光。",
    "X72n1435_007:0268c11_27": "拾苔錢而嚴富態。",
    "X72n1435_007:0268c11_28": "有人向三種問答上徹去。",
    "X72n1435_007:0268c12_29": "洞上宗風。",
    "X72n1435_007:0268c12_30": "於斯有賴矣。",
    "X72n1435_007:0268c12_31": "僧問。",
    "X72n1435_007:0268c12_32": "學人一口氣不來。",
    "X72n1435_007:0268c13_33": "向何處安身立命。",
    "X72n1435_007:0268c13_34": "師云毗盧閣後鳳凰山。",
    "X72n1435_007:0268c14_0": "真州海吉禪人。",
    "X72n1435_007:0268c14_1": "率眾道侶請。",
    "X72n1435_007:0268c14_2": "上堂。",
    "X72n1435_007:0268c14_3": "不與萬法為侶者。",
    "X72n1435_007:0268c15_0": "是甚麼人。",
    "X72n1435_007:0268c15_1": "紅塵堆裏露全身。",
    "X72n1435_007:0268c15_2": "了知萬象空無物。",
    "X72n1435_007:0268c15_3": "那見山河礙眼睛。",
    "X72n1435_007:0268c16_4": "三歲孩兒頭似雪。",
    "X72n1435_007:0268c16_5": "神光萬里一條鐵。",
    "X72n1435_007:0268c16_6": "底事分明說與知。",
    "X72n1435_007:0268c17_7": "當戶連山也太奇。",
    "X72n1435_007:0268c17_8": "兼帶位中親迸出。",
    "X72n1435_007:0268c18_0": "巖前石虎夜生兒。",
    "X72n1435_007:0268c18_1": "生兒則且置。",
    "X72n1435_007:0268c18_2": "且道。",
    "X72n1435_007:0268c18_3": "是甚麼時。",
    "X72n1435_007:0268c18_4": "子丑寅卯辰巳午未申酉戌亥。",
    "X72n1435_007:0268c19_5": "乾三連。",
    "X72n1435_007:0268c19_6": "坤六斷。",
    "X72n1435_007:0268c19_7": "離中虗。",
    "X72n1435_007:0268c19_8": "坎中滿。",
    "X72n1435_007:0268c20_9": "屈指顛倒。",
    "X72n1435_007:0268c20_10": "數來依舊。",
    "X72n1435_007:0268c20_11": "寸長尺短。",
    "X72n1435_007:0268c20_12": "珍重。",
    "X72n1435_007:0268c21_0": "余集生居士誕日請。",
    "X72n1435_007:0268c21_1": "上堂。",
    "X72n1435_007:0268c21_2": "佛於無量劫。",
    "X72n1435_007:0268c21_3": "廣行無量行。",
    "X72n1435_007:0268c22_0": "度脫無量眾。",
    "X72n1435_007:0268c22_1": "是名無量壽。",
    "X72n1435_007:0268c22_2": "諸昆仲我等同世尊。",
    "X72n1435_007:0268c22_3": "因地以來至於今日。",
    "X72n1435_007:0268c23_4": "而世尊成道已經無量恒沙劫數。",
    "X72n1435_007:0268c23_5": "我等輪迴生死六道。",
    "X72n1435_007:0268c24_6": "往還亦經無量恒沙劫數。",
    "X72n1435_007:0268c24_7": "世界成住壞空。",
    "X72n1435_007:0269a01_8": "亦經無量恒沙劫數。",
    "X72n1435_007:0269a01_9": "毗嵐風起。",
    "X72n1435_007:0269a01_10": "金藏雲成。",
    "X72n1435_007:0269a01_11": "而虗空之性。",
    "X72n1435_007:0269a02_12": "湛然不動。",
    "X72n1435_007:0269a02_13": "亦經無量恒沙劫數。",
    "X72n1435_007:0269a02_14": "以此則知諸佛壽命亦無量。",
    "X72n1435_007:0269a03_15": "眾生壽命亦無量。",
    "X72n1435_007:0269a03_16": "世界壽命亦無量。",
    "X72n1435_007:0269a04_17": "虗空壽命亦無量。",
    "X72n1435_007:0269a04_18": "今日集生余居士華筵大誕。",
    "X72n1435_007:0269a04_19": "而一切人。",
    "X72n1435_007:0269a05_20": "皆以世禮年月為居士壽。",
    "X72n1435_007:0269a05_21": "博山則不然。",
    "X72n1435_007:0269a05_22": "但願居士壽同善財。",
    "X72n1435_007:0269a06_23": "菩提心解脫海亦無量。",
    "X72n1435_007:0269a06_24": "願居士壽同彌勒。",
    "X72n1435_007:0269a07_25": "成佛度生海亦無量。",
    "X72n1435_007:0269a07_26": "願居士壽同普賢。",
    "X72n1435_007:0269a07_27": "行願莊嚴海亦無量。",
    "X72n1435_007:0269a08_28": "願居士壽同觀音。",
    "X72n1435_007:0269a08_29": "大悲示現海亦無量。",
    "X72n1435_007:0269a09_0": "願居士壽同文殊。",
    "X72n1435_007:0269a09_1": "般舟智慧海亦無量。",
    "X72n1435_007:0269a09_2": "願居士祿位亦無量。",
    "X72n1435_007:0269a10_3": "眷屬亦無量。",
    "X72n1435_007:0269a10_4": "親受用亦無量。",
    "X72n1435_007:0269a10_5": "三三昧亦無量。",
    "X72n1435_007:0269a11_0": "豈但居士如是。",
    "X72n1435_007:0269a11_1": "即現前大眾。",
    "X72n1435_007:0269a11_2": "親受用三三昧等。",
    "X72n1435_007:0269a11_3": "壽命亦無量。",
    "X72n1435_007:0269a12_4": "博山是真語者。",
    "X72n1435_007:0269a12_5": "實語者。",
    "X72n1435_007:0269a12_6": "不異語者。",
    "X72n1435_007:0269a12_7": "且更將何物為居士壽耶。",
    "X72n1435_007:0269a13_8": "良久云。",
    "X72n1435_007:0269a13_9": "珍重。",
    "X72n1435_007:0269a14_0": "解制上堂。",
    "X72n1435_007:0269a14_1": "佛真法身。",
    "X72n1435_007:0269a14_2": "猶若虗空。",
    "X72n1435_007:0269a14_3": "應物現形。",
    "X72n1435_007:0269a14_4": "如水中月。",
    "X72n1435_007:0269a15_0": "博山從廣信登舟。",
    "X72n1435_007:0269a15_1": "過鄱陽。",
    "X72n1435_007:0269a15_2": "出湖口。",
    "X72n1435_007:0269a15_3": "跨長江。",
    "X72n1435_007:0269a15_4": "登石頭城江岸。",
    "X72n1435_007:0269a16_5": "從濟生菴。",
    "X72n1435_007:0269a16_6": "至天界寺。",
    "X72n1435_007:0269a16_7": "安置水月道場。",
    "X72n1435_007:0269a16_8": "修習空花萬行。",
    "X72n1435_007:0269a17_9": "降伏鏡裏魔軍。",
    "X72n1435_007:0269a17_10": "成就夢中佛事。",
    "X72n1435_007:0269a17_11": "豈但博山。",
    "X72n1435_007:0269a17_12": "遡自釋迦大師開場。",
    "X72n1435_007:0269a18_13": "四十九年。",
    "X72n1435_007:0269a18_14": "末後拈花示眾。",
    "X72n1435_007:0269a18_15": "正法眼藏涅槃妙心。",
    "X72n1435_007:0269a19_16": "付囑摩訶迦葉。",
    "X72n1435_007:0269a19_17": "亦是夢中佛事。",
    "X72n1435_007:0269a19_18": "達磨大師航海而來少林。",
    "X72n1435_007:0269a20_19": "面壁九載。",
    "X72n1435_007:0269a20_20": "雪庭深夜。",
    "X72n1435_007:0269a20_21": "斷臂詶心。",
    "X72n1435_007:0269a20_22": "亦是夢中佛事。",
    "X72n1435_007:0269a21_23": "乃至執役負舂。",
    "X72n1435_007:0269a21_24": "傳衣半夜。",
    "X72n1435_007:0269a21_25": "亦是夢中佛事。",
    "X72n1435_007:0269a22_0": "至使五家競出。",
    "X72n1435_007:0269a22_1": "千燈列焰。",
    "X72n1435_007:0269a22_2": "吹簫打皷。",
    "X72n1435_007:0269a22_3": "舞劒揮叉。",
    "X72n1435_007:0269a22_4": "棒喝交馳。",
    "X72n1435_007:0269a23_5": "語言遊戲。",
    "X72n1435_007:0269a23_6": "亦是夢中佛事。",
    "X72n1435_007:0269a23_7": "即今博山同。",
    "X72n1435_007:0269a23_8": "諸昆仲結制解制。",
    "X72n1435_007:0269a24_9": "陞堂入室。",
    "X72n1435_007:0269a24_10": "問答機緣。",
    "X72n1435_007:0269a24_11": "勞彼列眾監院及天界方丈十位首領道人并諸執事。",
    "X72n1435_007:0269b01_12": "不以身為身。",
    "X72n1435_007:0269b01_13": "不以命為命。",
    "X72n1435_007:0269b02_14": "喫盡艱辛。",
    "X72n1435_007:0269b02_15": "護揚大法。",
    "X72n1435_007:0269b02_16": "亦是夢中佛事。",
    "X72n1435_007:0269b02_17": "諸昆仲博山恁麼舉似。",
    "X72n1435_007:0269b03_18": "正是好肉剜瘡。",
    "X72n1435_007:0269b03_19": "夢中說夢。",
    "X72n1435_007:0269b03_20": "假如有一漢子大喝一聲。",
    "X72n1435_007:0269b04_21": "諸人睡夢醒時。",
    "X72n1435_007:0269b04_22": "却又作麼生道。",
    "X72n1435_007:0269b04_23": "良久云。",
    "X72n1435_007:0269b05_24": "毫光直徧三千界。",
    "X72n1435_007:0269b05_25": "永祝皇圖億萬年。",
    "X72n1435_007:0269b05_26": "僧問。",
    "X72n1435_007:0269b05_27": "上根人來如何接。",
    "X72n1435_007:0269b06_28": "師云。",
    "X72n1435_007:0269b06_29": "此去祖堂三十里。",
    "X72n1435_007:0269b06_30": "進云。",
    "X72n1435_007:0269b06_31": "中根人來如何接。",
    "X72n1435_007:0269b07_32": "師云。",
    "X72n1435_007:0269b07_33": "獻花巖畔古今聞。",
    "X72n1435_007:0269b07_34": "進云。",
    "X72n1435_007:0269b07_35": "下根人來如何接。",
    "X72n1435_007:0269b08_0": "師云。",
    "X72n1435_007:0269b08_1": "門外好與三十棒。",
    "X72n1435_007:0269b08_2": "進云。",
    "X72n1435_007:0269b08_3": "不落階級人來如何接。",
    "X72n1435_007:0269b09_0": "師云。",
    "X72n1435_007:0269b09_1": "闍黎只今。",
    "X72n1435_007:0269b09_2": "在第幾位。",
    "X72n1435_007:0269b09_3": "僧禮拜。",
    "X72n1435_007:0269b10_0": "小參",
    "X72n1435_007:0269b11_0": "小參。",
    "X72n1435_007:0269b11_1": "臘盡逢春事事奇。",
    "X72n1435_007:0269b11_2": "海風吹動碧玻璃。",
    "X72n1435_007:0269b11_3": "昨宵偶得家鄉信。",
    "X72n1435_007:0269b12_4": "破院荒村絕所依。",
    "X72n1435_007:0269b12_5": "諸昆仲博山家鄉。",
    "X72n1435_007:0269b12_6": "是破院耶。",
    "X72n1435_007:0269b13_7": "是荒村耶。",
    "X72n1435_007:0269b13_8": "有人簡點得出。",
    "X72n1435_007:0269b13_9": "博山與彼携手同歸。",
    "X72n1435_007:0269b13_10": "其或未然。",
    "X72n1435_007:0269b14_11": "法華且謾添塵點。",
    "X72n1435_007:0269b14_12": "數盡閻浮又一年。",
    "X72n1435_007:0269b15_0": "小參。",
    "X72n1435_007:0269b15_1": "僧問竟。",
    "X72n1435_007:0269b15_2": "師乃云。",
    "X72n1435_007:0269b15_3": "時名五濁。",
    "X72n1435_007:0269b15_4": "世曰娑婆。",
    "X72n1435_007:0269b15_5": "地面丘墟。",
    "X72n1435_007:0269b16_0": "人心荊棘。",
    "X72n1435_007:0269b16_1": "青林掌中毒氣。",
    "X72n1435_007:0269b16_2": "破驢脊上來蠅。",
    "X72n1435_007:0269b16_3": "蹈水火以脩行。",
    "X72n1435_007:0269b17_4": "逐腥膻而喘息。",
    "X72n1435_007:0269b17_5": "胸中無半點禪氣。",
    "X72n1435_007:0269b17_6": "強作機鋒肚裏懷。",
    "X72n1435_007:0269b18_7": "一塊骯[骨*(卄/(歹*巳)/土)]。",
    "X72n1435_007:0269b18_8": "伸為問答。",
    "X72n1435_007:0269b18_9": "鬼見拍手而笑。",
    "X72n1435_007:0269b18_10": "人逢側目而嗔。",
    "X72n1435_007:0269b19_11": "埋沒己靈。",
    "X72n1435_007:0269b19_12": "辜負先聖。",
    "X72n1435_007:0269b19_13": "洗心改過。",
    "X72n1435_007:0269b19_14": "莫逐妄緣。",
    "X72n1435_007:0269b19_15": "不悛前愆。",
    "X72n1435_007:0269b20_16": "果從因墜。",
    "X72n1435_007:0269b20_17": "豈不見。",
    "X72n1435_007:0269b20_18": "靈山會上知音少。",
    "X72n1435_007:0269b20_19": "長者園中木耳多。",
    "X72n1435_007:0269b21_20": "卓拄杖。",
    "X72n1435_007:0269b21_21": "下座。",
    "X72n1435_007:0269b22_0": "生生社小參。",
    "X72n1435_007:0269b22_1": "宗門中事。",
    "X72n1435_007:0269b22_2": "難以措詞。",
    "X72n1435_007:0269b22_3": "盡力道不得底句。",
    "X72n1435_007:0269b23_0": "作麼生開口。",
    "X72n1435_007:0269b23_1": "三乘十二分教。",
    "X72n1435_007:0269b23_2": "有人說去了也。",
    "X72n1435_007:0269b23_3": "即心即佛。",
    "X72n1435_007:0269b24_4": "有人說去了也。",
    "X72n1435_007:0269b24_5": "非心非佛。",
    "X72n1435_007:0269b24_6": "有人說去了也。",
    "X72n1435_007:0269b24_7": "不是心不是佛不是物。",
    "X72n1435_007:0269c01_8": "亦有人說去了也。",
    "X72n1435_007:0269c01_9": "且道。",
    "X72n1435_007:0269c01_10": "與諸昆仲分析箇甚麼即得。",
    "X72n1435_007:0269c02_11": "良久云。",
    "X72n1435_007:0269c02_12": "黃金自有黃金價。",
    "X72n1435_007:0269c02_13": "肯為和沙賣與人。",
    "X72n1435_007:0269c03_14": "珍重。",
    "X72n1435_007:0269c04_0": "月上庵小參。",
    "X72n1435_007:0269c04_1": "忠國師云。",
    "X72n1435_007:0269c04_2": "青蘿夤緣。",
    "X72n1435_007:0269c04_3": "直上寒松之頂。",
    "X72n1435_007:0269c04_4": "白雲淡泞。",
    "X72n1435_007:0269c05_5": "出沒太虗之中。",
    "X72n1435_007:0269c05_6": "萬法本閒。",
    "X72n1435_007:0269c05_7": "而人自閙。",
    "X72n1435_007:0269c05_8": "諸昆仲即今山河大地。",
    "X72n1435_007:0269c06_9": "萬象森羅。",
    "X72n1435_007:0269c06_10": "水鳥樹林。",
    "X72n1435_007:0269c06_11": "人叢馬蹋。",
    "X72n1435_007:0269c06_12": "喚作萬法。",
    "X72n1435_007:0269c07_13": "作麼生說箇本閒底道理。",
    "X72n1435_007:0269c07_14": "捨萬法而求本閒。",
    "X72n1435_007:0269c07_15": "未之有也。",
    "X72n1435_007:0269c08_16": "即萬法而求本閒。",
    "X72n1435_007:0269c08_17": "須要衣線下迸開始得。",
    "X72n1435_007:0269c08_18": "所以博山。",
    "X72n1435_007:0269c09_19": "教人將一句話頭。",
    "X72n1435_007:0269c09_20": "置在八識田中。",
    "X72n1435_007:0269c09_21": "眉毛與大地廝結。",
    "X72n1435_007:0269c10_22": "只教自悟自肯。",
    "X72n1435_007:0269c10_23": "其或未然。",
    "X72n1435_007:0269c10_24": "聽取一偈。",
    "X72n1435_007:0269c10_25": "諸佛依何住。",
    "X72n1435_007:0269c11_26": "靈山問意新。",
    "X72n1435_007:0269c11_27": "心宗為社主。",
    "X72n1435_007:0269c11_28": "金粟作檀人。",
    "X72n1435_007:0269c11_29": "一雨滋春國。",
    "X72n1435_007:0269c12_30": "千燈薄暮雲。",
    "X72n1435_007:0269c12_31": "須知塵界裏。",
    "X72n1435_007:0269c12_32": "真俗未容分。",
    "X72n1435_007:0269c12_33": "珍重。",
    "X72n1435_007:0269c13_0": "浮山華嚴寺立新住持請。",
    "X72n1435_007:0269c13_1": "小參。",
    "X72n1435_007:0269c13_2": "一大圓覺。",
    "X72n1435_007:0269c13_3": "為我伽藍。",
    "X72n1435_007:0269c14_0": "又當知。",
    "X72n1435_007:0269c14_1": "以我伽藍。",
    "X72n1435_007:0269c14_2": "為一大圓覺。",
    "X72n1435_007:0269c14_3": "互攝互融。",
    "X72n1435_007:0269c14_4": "無二無別。",
    "X72n1435_007:0269c15_0": "然後應事接物。",
    "X72n1435_007:0269c15_1": "始無障礙。",
    "X72n1435_007:0269c15_2": "夫善住持者。",
    "X72n1435_007:0269c15_3": "先得根本不動智。",
    "X72n1435_007:0269c16_4": "然後得差別智。",
    "X72n1435_007:0269c16_5": "根本不動智中容不得絲毫動念處。",
    "X72n1435_007:0269c17_6": "差別智者。",
    "X72n1435_007:0269c17_7": "應事接物。",
    "X72n1435_007:0269c17_8": "頭頭合轍。",
    "X72n1435_007:0269c17_9": "若有絲毫念慮可動。",
    "X72n1435_007:0269c18_10": "未免有生滅去來之相。",
    "X72n1435_007:0269c18_11": "不名智也。",
    "X72n1435_007:0269c18_12": "得此智者。",
    "X72n1435_007:0269c18_13": "以理應事。",
    "X72n1435_007:0269c19_14": "事事全理。",
    "X72n1435_007:0269c19_15": "如其不然。",
    "X72n1435_007:0269c19_16": "不名住持。",
    "X72n1435_007:0269c19_17": "不見。",
    "X72n1435_007:0269c19_18": "僧問。",
    "X72n1435_007:0269c19_19": "雲門不起一念時如何。",
    "X72n1435_007:0269c20_20": "門云。",
    "X72n1435_007:0269c20_21": "須彌山天童頌云。",
    "X72n1435_007:0269c20_22": "不起一念須彌山。",
    "X72n1435_007:0269c21_23": "雲門法施。",
    "X72n1435_007:0269c21_24": "亦非慳。",
    "X72n1435_007:0269c21_25": "肯來兩手相分付。",
    "X72n1435_007:0269c21_26": "擬去千尋不可攀。",
    "X72n1435_007:0269c22_27": "山海濶白雲閒。",
    "X72n1435_007:0269c22_28": "莫將毫髮著其間。",
    "X72n1435_007:0269c22_29": "假雞聲韻難瞞我。",
    "X72n1435_007:0269c23_30": "未肯模糊放過關。",
    "X72n1435_007:0269c23_31": "天童大師重門擊柝。",
    "X72n1435_007:0269c24_0": "以待暴客。",
    "X72n1435_007:0269c24_1": "匙鑰在手。",
    "X72n1435_007:0269c24_2": "防禦甚嚴。",
    "X72n1435_007:0269c24_3": "昔茲山住持遠錄公。",
    "X72n1435_007:0270a01_0": "棋無敵手。",
    "X72n1435_007:0270a01_1": "固是奪角衝關。",
    "X72n1435_007:0270a01_2": "祇是博山今日。",
    "X72n1435_007:0270a01_3": "要問伊黑白未分以前。",
    "X72n1435_007:0270a02_4": "者一著子。",
    "X72n1435_007:0270a02_5": "畢竟如何下手。",
    "X72n1435_007:0270a02_6": "從來十九路。",
    "X72n1435_007:0270a03_0": "迷悟幾多人。",
    "X72n1435_007:0270a03_1": "且道。",
    "X72n1435_007:0270a03_2": "迷箇甚麼。",
    "X72n1435_007:0270a03_3": "悟箇甚麼。",
    "X72n1435_007:0270a03_4": "良久云。",
    "X72n1435_007:0270a03_5": "珍重大龍山中方寺小參。",
    "X72n1435_007:0270a04_6": "若欲說法。",
    "X72n1435_007:0270a04_7": "無法可說。",
    "X72n1435_007:0270a04_8": "無可說者。",
    "X72n1435_007:0270a05_0": "始名說法。",
    "X72n1435_007:0270a05_1": "有法可說。",
    "X72n1435_007:0270a05_2": "恐辱大法。",
    "X72n1435_007:0270a05_3": "昔世尊陞座。",
    "X72n1435_007:0270a05_4": "文殊白槌云。",
    "X72n1435_007:0270a06_5": "諦觀法王法。",
    "X72n1435_007:0270a06_6": "法王法如是。",
    "X72n1435_007:0270a06_7": "世尊便下座。",
    "X72n1435_007:0270a06_8": "諸昆仲且道。",
    "X72n1435_007:0270a07_9": "世尊有法可說耶無法可說耶。",
    "X72n1435_007:0270a07_10": "諸人也須向者裏開眼始得。",
    "X72n1435_007:0270a08_11": "文殊恁麼道。",
    "X72n1435_007:0270a08_12": "在甚麼處。",
    "X72n1435_007:0270a08_13": "見世尊說法。",
    "X72n1435_007:0270a08_14": "世尊便下座。",
    "X72n1435_007:0270a09_15": "是許文殊。",
    "X72n1435_007:0270a09_16": "是不許文殊。",
    "X72n1435_007:0270a09_17": "諸昆仲還簡點得出麼。",
    "X72n1435_007:0270a10_18": "其或未然。",
    "X72n1435_007:0270a10_19": "聽取一偈。",
    "X72n1435_007:0270a10_20": "白雲山頂中方寺。",
    "X72n1435_007:0270a10_21": "清梵無停僧自閒。",
    "X72n1435_007:0270a11_22": "只恐溪深流水急。",
    "X72n1435_007:0270a11_23": "賸分花雨落人間。",
    "X72n1435_007:0270a12_0": "宮諭吳觀我居士請。",
    "X72n1435_007:0270a12_1": "小參。",
    "X72n1435_007:0270a12_2": "若欲究宗門中事。",
    "X72n1435_007:0270a12_3": "須正信因果。",
    "X72n1435_007:0270a13_4": "熟爛教乘。",
    "X72n1435_007:0270a13_5": "思地獄苦。",
    "X72n1435_007:0270a13_6": "發菩提心。",
    "X72n1435_007:0270a13_7": "古德云。",
    "X72n1435_007:0270a13_8": "禪律並行。",
    "X72n1435_007:0270a14_9": "不相留礙。",
    "X72n1435_007:0270a14_10": "若論淨白心地。",
    "X72n1435_007:0270a14_11": "人人具足。",
    "X72n1435_007:0270a14_12": "只因妄興一念起貪嗔癡。",
    "X72n1435_007:0270a15_13": "有貪嗔癡之因。",
    "X72n1435_007:0270a15_14": "便感三惡道之果。",
    "X72n1435_007:0270a15_15": "教中謂。",
    "X72n1435_007:0270a16_16": "縱而為貪。",
    "X72n1435_007:0270a16_17": "地獄有不息之機。",
    "X72n1435_007:0270a16_18": "抑而為嗔。",
    "X72n1435_007:0270a16_19": "餓鬼有肢節火然之苦。",
    "X72n1435_007:0270a17_20": "合而為癡。",
    "X72n1435_007:0270a17_21": "畜生道中。",
    "X72n1435_007:0270a17_22": "但念水草。",
    "X72n1435_007:0270a17_23": "餘無所知。",
    "X72n1435_007:0270a18_24": "若無貪嗔癡。",
    "X72n1435_007:0270a18_25": "則三惡道何有。",
    "X72n1435_007:0270a18_26": "博山所以教列位。",
    "X72n1435_007:0270a18_27": "向淨白地上。",
    "X72n1435_007:0270a19_28": "發起一念。",
    "X72n1435_007:0270a19_29": "肯心單提。",
    "X72n1435_007:0270a19_30": "一口氣不來。",
    "X72n1435_007:0270a19_31": "畢竟向甚麼處去。",
    "X72n1435_007:0270a20_32": "切不得起思惟度量。",
    "X72n1435_007:0270a20_33": "思惟度量。",
    "X72n1435_007:0270a20_34": "謂之藥忌。",
    "X72n1435_007:0270a21_0": "雲棲大師云。",
    "X72n1435_007:0270a21_1": "獅子之乳。",
    "X72n1435_007:0270a21_2": "非瑠璃瓶貯之則裂。",
    "X72n1435_007:0270a21_3": "無上玅道。",
    "X72n1435_007:0270a22_4": "非淨法之器。",
    "X72n1435_007:0270a22_5": "莫能載也。",
    "X72n1435_007:0270a22_6": "壽昌和尚云。",
    "X72n1435_007:0270a22_7": "醍醐上味出乎乳。",
    "X72n1435_007:0270a23_8": "滴水攙中總不成。",
    "X72n1435_007:0270a23_9": "謂滴水者。",
    "X72n1435_007:0270a23_10": "正思惟度量也。",
    "X72n1435_007:0270a23_11": "若無思惟度量。",
    "X72n1435_007:0270a24_12": "便能單刀直入。",
    "X72n1435_007:0270a24_13": "力破重圍。",
    "X72n1435_007:0270a24_14": "如吳太史發大乘心。",
    "X72n1435_007:0270b01_15": "受大乘戒。",
    "X72n1435_007:0270b01_16": "正所謂淨法之器。",
    "X72n1435_007:0270b01_17": "但未知有向上事。",
    "X72n1435_007:0270b02_18": "今日緣會。",
    "X72n1435_007:0270b02_19": "勉起信向。",
    "X72n1435_007:0270b02_20": "偈曰。",
    "X72n1435_007:0270b02_21": "江北有居士。",
    "X72n1435_007:0270b02_22": "天人興仰止。",
    "X72n1435_007:0270b03_23": "傳聞金粟來。",
    "X72n1435_007:0270b03_24": "緣境頗相似。",
    "X72n1435_007:0270b03_25": "論心秋月皎。",
    "X72n1435_007:0270b03_26": "談教春雲起。",
    "X72n1435_007:0270b04_27": "機感得相符。",
    "X72n1435_007:0270b04_28": "令予特來此。",
    "X72n1435_007:0270b04_29": "勉究向上事。",
    "X72n1435_007:0270b04_30": "向上何深旨。",
    "X72n1435_007:0270b05_31": "踢破指頭時。",
    "X72n1435_007:0270b05_32": "舒州吳太史。",
    "X72n1435_007:0270b06_0": "洪濤山毗尼菴。",
    "X72n1435_007:0270b06_1": "小參。",
    "X72n1435_007:0270b06_2": "諸昆仲生不知何來。",
    "X72n1435_007:0270b06_3": "不得不疑來處。",
    "X72n1435_007:0270b07_4": "死不知何去。",
    "X72n1435_007:0270b07_5": "不得不疑去處。",
    "X72n1435_007:0270b07_6": "大丈夫兒。",
    "X72n1435_007:0270b07_7": "豈肯甘心隨業受報。",
    "X72n1435_007:0270b08_8": "若欲究竟此事。",
    "X72n1435_007:0270b08_9": "貴在純真一念。",
    "X72n1435_007:0270b08_10": "不得草草。",
    "X72n1435_007:0270b09_11": "如香林四十年。",
    "X72n1435_007:0270b09_12": "始打成一片。",
    "X72n1435_007:0270b09_13": "靈雲三十載。",
    "X72n1435_007:0270b09_14": "見桃花始悟。",
    "X72n1435_007:0270b10_15": "所以博山教人看一句話頭。",
    "X72n1435_007:0270b10_16": "一口氣不來。",
    "X72n1435_007:0270b10_17": "畢竟向甚麼處去。",
    "X72n1435_007:0270b11_18": "行裏坐裏。",
    "X72n1435_007:0270b11_19": "著衣喫飯裏。",
    "X72n1435_007:0270b11_20": "畢竟一口氣不來。",
    "X72n1435_007:0270b12_21": "向甚麼處去。",
    "X72n1435_007:0270b12_22": "慎勿思量分別。",
    "X72n1435_007:0270b12_23": "思量分別。",
    "X72n1435_007:0270b12_24": "與究竟此事大不相應。",
    "X72n1435_007:0270b13_25": "若果能真參實究。",
    "X72n1435_007:0270b13_26": "一朝洗面。",
    "X72n1435_007:0270b13_27": "摸著鼻孔。",
    "X72n1435_007:0270b14_0": "却也太近。",
    "X72n1435_007:0270b15_0": "小參。",
    "X72n1435_007:0270b15_1": "百千法門。",
    "X72n1435_007:0270b15_2": "無量妙義。",
    "X72n1435_007:0270b15_3": "盡在諸人心意識中。",
    "X72n1435_007:0270b15_4": "悉皆具足。",
    "X72n1435_007:0270b16_5": "汝若認著心意識。",
    "X72n1435_007:0270b16_6": "便昧却百千法門。",
    "X72n1435_007:0270b16_7": "汝若體會得百千法門。",
    "X72n1435_007:0270b17_8": "何處有心意識來者。",
    "X72n1435_007:0270b17_9": "些子關竅。",
    "X72n1435_007:0270b17_10": "亦能殺人。",
    "X72n1435_007:0270b18_11": "亦能活人。",
    "X72n1435_007:0270b18_12": "諸禪者各各在衣線下開眼。",
    "X72n1435_007:0270b18_13": "拌此一生。",
    "X72n1435_007:0270b19_0": "討箇著落。",
    "X72n1435_007:0270b20_0": "小參。",
    "X72n1435_007:0270b20_1": "長慶道。",
    "X72n1435_007:0270b20_2": "萬象之中獨露身。",
    "X72n1435_007:0270b20_3": "惟人自肯乃相親。",
    "X72n1435_007:0270b20_4": "即今山河大地。",
    "X72n1435_007:0270b21_5": "樓臺池舘。",
    "X72n1435_007:0270b21_6": "滿目青黃。",
    "X72n1435_007:0270b21_7": "是萬象。",
    "X72n1435_007:0270b21_8": "喚甚麼作獨露底身。",
    "X72n1435_007:0270b22_9": "拈拄杖云。",
    "X72n1435_007:0270b22_10": "莫祇圖他山色好。",
    "X72n1435_007:0270b22_11": "須知。",
    "X72n1435_007:0270b22_12": "別有故園春。",
    "X72n1435_007:0270b23_13": "卓拄杖一下。",
    "X72n1435_007:0270b24_0": "為劉和鶴居士對靈。",
    "X72n1435_007:0270b24_1": "小參。",
    "X72n1435_007:0270b24_2": "公生耶。",
    "X72n1435_007:0270b24_3": "死耶。",
    "X72n1435_007:0270b24_4": "誰道。",
    "X72n1435_007:0270b24_5": "虗空有變遷。",
    "X72n1435_007:0270c01_6": "公死耶。",
    "X72n1435_007:0270c01_7": "生耶。",
    "X72n1435_007:0270c01_8": "誰道。",
    "X72n1435_007:0270c01_9": "滄溟有傾覆。",
    "X72n1435_007:0270c01_10": "公生死洞然。",
    "X72n1435_007:0270c01_11": "也雖劫風。",
    "X72n1435_007:0270c02_12": "而莫能吹。",
    "X72n1435_007:0270c02_13": "公慧光渾圓。",
    "X72n1435_007:0270c02_14": "也縱劫火。",
    "X72n1435_007:0270c02_15": "而莫能移。",
    "X72n1435_007:0270c03_0": "公之趣向。",
    "X72n1435_007:0270c03_1": "也肉眼罔窺。",
    "X72n1435_007:0270c03_2": "公之行業。",
    "X72n1435_007:0270c03_3": "也孰不苾奇。",
    "X72n1435_007:0270c03_4": "公之見地。",
    "X72n1435_007:0270c04_5": "也住向莫齊。",
    "X72n1435_007:0270c04_6": "公之受用。",
    "X72n1435_007:0270c04_7": "也惟聖乃知。",
    "X72n1435_007:0270c04_8": "霞坊山色空今古。",
    "X72n1435_007:0270c05_9": "靜聽玄猿徹夜啼。",
    "X72n1435_007:0270c06_0": "因事晚參今晚好月。",
    "X72n1435_007:0270c06_1": "大眾見麼。",
    "X72n1435_007:0270c06_2": "可謂。",
    "X72n1435_007:0270c06_3": "玉鑑光輝觸處週。",
    "X72n1435_007:0270c07_4": "幾多盲瞽黑漫頭。",
    "X72n1435_007:0270c07_5": "可憐不受金錍者。",
    "X72n1435_007:0270c07_6": "頭白終歸暗裏休。",
    "X72n1435_007:0270c08_7": "此月古今評論者不少。",
    "X72n1435_007:0270c08_8": "自世尊以來。",
    "X72n1435_007:0270c08_9": "迨於今日。",
    "X72n1435_007:0270c09_0": "千賢萬聖。",
    "X72n1435_007:0270c09_1": "莫不盡力提擕。",
    "X72n1435_007:0270c09_2": "老婆心切。",
    "X72n1435_007:0270c09_3": "簡點將來。",
    "X72n1435_007:0270c09_4": "祇說得月影邊事。",
    "X72n1435_007:0270c10_5": "要見真月麼。",
    "X72n1435_007:0270c10_6": "須是自己開眼始得。",
    "X72n1435_007:0270c10_7": "所謂靈山話曹溪。",
    "X72n1435_007:0270c11_8": "指南泉翫寒山。",
    "X72n1435_007:0270c11_9": "比說得彷彷彿彿。",
    "X72n1435_007:0270c11_10": "依依稀稀。",
    "X72n1435_007:0270c12_11": "縱然道得十成。",
    "X72n1435_007:0270c12_12": "博山未敢相許。",
    "X72n1435_007:0270c12_13": "何以故。",
    "X72n1435_007:0270c12_14": "肘後不具靈符。",
    "X72n1435_007:0270c13_15": "盡在是非窩裏。",
    "X72n1435_007:0270c13_16": "大眾直須努力跳出是非關。",
    "X72n1435_007:0270c14_0": "若不跳出是非關。",
    "X72n1435_007:0270c14_1": "三途黑暗將何抵。",
    "X72n1435_007:0270c14_2": "珍重。",
    "X72n1435_007:0270c16_0": "無異禪師廣錄卷第七"
}