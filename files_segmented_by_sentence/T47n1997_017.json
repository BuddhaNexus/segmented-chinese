{
    "T47n1997_017:0791a22_0": "圓悟佛果禪師語錄卷第十七",
    "T47n1997_017:0791a24_0": "宋平江府虎丘山門人紹隆等編",
    "T47n1997_017:0791a25_0": "拈古中",
    "T47n1997_017:0791a26_0": "舉。",
    "T47n1997_017:0791a26_1": "德山小參示眾云。",
    "T47n1997_017:0791a26_2": "老僧今夜不答話。",
    "T47n1997_017:0791a26_3": "問話者三十棒。",
    "T47n1997_017:0791a27_4": "時有僧出禮拜。",
    "T47n1997_017:0791a27_5": "山便打。",
    "T47n1997_017:0791a27_6": "僧云。",
    "T47n1997_017:0791a27_7": "某甲話也未問。",
    "T47n1997_017:0791a28_8": "因甚打某甲。",
    "T47n1997_017:0791a28_9": "山云。",
    "T47n1997_017:0791a28_10": "爾甚處人。",
    "T47n1997_017:0791a28_11": "僧云。",
    "T47n1997_017:0791a29_12": "新羅人。",
    "T47n1997_017:0791a29_13": "山云。",
    "T47n1997_017:0791a29_14": "未跨船舷好與三十棒。",
    "T47n1997_017:0791a29_15": "師云。",
    "T47n1997_017:0791b01_16": "德山大似金輪聖王。",
    "T47n1997_017:0791b01_17": "寰中獨據四方八表無不順從。",
    "T47n1997_017:0791b02_18": "等閑布一勅施一令。",
    "T47n1997_017:0791b02_19": "直得草偃風行。",
    "T47n1997_017:0791b03_20": "若不是這僧。",
    "T47n1997_017:0791b03_21": "爭見殺活擒縱威德自在。",
    "T47n1997_017:0791b03_22": "法眼云。",
    "T47n1997_017:0791b04_23": "大小德山。",
    "T47n1997_017:0791b04_24": "話作兩橛。",
    "T47n1997_017:0791b04_25": "圓明云。",
    "T47n1997_017:0791b04_26": "大小德山。",
    "T47n1997_017:0791b05_27": "龍頭蛇尾。",
    "T47n1997_017:0791b05_28": "雪竇云。",
    "T47n1997_017:0791b05_29": "德山握閫外威權。",
    "T47n1997_017:0791b05_30": "有當斷不斷不招其亂底劍。",
    "T47n1997_017:0791b06_31": "雖則直截單提各能扶竪。",
    "T47n1997_017:0791b07_32": "德山要且只扶得末後句。",
    "T47n1997_017:0791b07_33": "未扶得最初句在。",
    "T47n1997_017:0791b08_34": "且作麼生是德山最初句。",
    "T47n1997_017:0791b08_35": "大鵬欲展摩霄翅。",
    "T47n1997_017:0791b09_36": "誰顧崩騰六合雲。",
    "T47n1997_017:0791b10_0": "舉。",
    "T47n1997_017:0791b10_1": "太原孚上座問鼓山。",
    "T47n1997_017:0791b10_2": "父母未生已前鼻孔在什麼處。",
    "T47n1997_017:0791b11_3": "山云。",
    "T47n1997_017:0791b11_4": "即今生也鼻孔在什麼處。",
    "T47n1997_017:0791b11_5": "孚不肯乃云。",
    "T47n1997_017:0791b12_6": "爾問我與爾道。",
    "T47n1997_017:0791b12_7": "鼓山問。",
    "T47n1997_017:0791b12_8": "父母未生已前鼻孔在什麼處。",
    "T47n1997_017:0791b13_9": "孚但搖扇而已。",
    "T47n1997_017:0791b13_10": "師云。",
    "T47n1997_017:0791b13_11": "奇特因緣。",
    "T47n1997_017:0791b14_12": "須以奇特激發。",
    "T47n1997_017:0791b14_13": "殊勝大事。",
    "T47n1997_017:0791b14_14": "須以殊勝舉揚。",
    "T47n1997_017:0791b15_15": "雖然隱顯無差。",
    "T47n1997_017:0791b15_16": "其奈巧拙有異。",
    "T47n1997_017:0791b15_17": "或有問崇寧。",
    "T47n1997_017:0791b16_18": "父母未生已前鼻孔在什麼。",
    "T47n1997_017:0791b16_19": "只劈口便掌。",
    "T47n1997_017:0791b18_0": "舉。",
    "T47n1997_017:0791b18_1": "臨濟入僧堂。",
    "T47n1997_017:0791b18_2": "兩堂首座齊下喝。",
    "T47n1997_017:0791b18_3": "僧問臨濟。",
    "T47n1997_017:0791b19_0": "還有賓主也無。",
    "T47n1997_017:0791b19_1": "濟云。",
    "T47n1997_017:0791b19_2": "賓主歷然。",
    "T47n1997_017:0791b19_3": "師云。",
    "T47n1997_017:0791b19_4": "正勅既行諸侯避道。",
    "T47n1997_017:0791b21_0": "舉。",
    "T47n1997_017:0791b21_1": "溈山普請次靜版鳴。",
    "T47n1997_017:0791b21_2": "有一僧拍手呵呵大笑歸去。",
    "T47n1997_017:0791b22_3": "溈山云。",
    "T47n1997_017:0791b22_4": "奇哉此是觀音入理之門。",
    "T47n1997_017:0791b22_5": "至晚問其僧。",
    "T47n1997_017:0791b23_6": "適來爾見什麼道理。",
    "T47n1997_017:0791b23_7": "僧云。",
    "T47n1997_017:0791b23_8": "朝來未喫飯。",
    "T47n1997_017:0791b24_9": "聞版聲歡喜。",
    "T47n1997_017:0791b24_10": "溈山云。",
    "T47n1997_017:0791b24_11": "賺殺人。",
    "T47n1997_017:0791b24_12": "鏡清云。",
    "T47n1997_017:0791b25_0": "當時溈山有此一僧。",
    "T47n1997_017:0791b25_1": "鼓山云。",
    "T47n1997_017:0791b25_2": "當時溈山無此一僧。",
    "T47n1997_017:0791b26_3": "師云。",
    "T47n1997_017:0791b26_4": "這僧洪音大振。",
    "T47n1997_017:0791b26_5": "直得一千五百人善知識眼目定動。",
    "T47n1997_017:0791b27_6": "及乎勘證將來。",
    "T47n1997_017:0791b27_7": "却打箇背翻筋斗。",
    "T47n1997_017:0791b28_8": "若不是溈山。",
    "T47n1997_017:0791b28_9": "爭見汗馬功高。",
    "T47n1997_017:0791b28_10": "後來道有此一僧只得一半。",
    "T47n1997_017:0791b29_11": "道無此一僧只得一半。",
    "T47n1997_017:0791c01_0": "今日板聲鐘聲魚聲鼓聲齊振。",
    "T47n1997_017:0791c01_1": "或有箇拍手呵呵大笑。",
    "T47n1997_017:0791c02_2": "直向伊道。",
    "T47n1997_017:0791c02_3": "觀音菩薩來也。",
    "T47n1997_017:0791c03_0": "舉。",
    "T47n1997_017:0791c03_1": "道吾與漸源至一家吊慰。",
    "T47n1997_017:0791c03_2": "源撫棺櫬問吾云。",
    "T47n1997_017:0791c04_3": "生耶死耶。",
    "T47n1997_017:0791c04_4": "道吾云。",
    "T47n1997_017:0791c04_5": "生也不道死也不道。",
    "T47n1997_017:0791c04_6": "源云。",
    "T47n1997_017:0791c05_7": "為什麼不道。",
    "T47n1997_017:0791c05_8": "吾云。",
    "T47n1997_017:0791c05_9": "不道不道。",
    "T47n1997_017:0791c05_10": "漸源网測。",
    "T47n1997_017:0791c06_0": "後來在一處聞誦觀音經。",
    "T47n1997_017:0791c06_1": "應以比丘身得度者。",
    "T47n1997_017:0791c07_2": "即現比丘身而為說法。",
    "T47n1997_017:0791c07_3": "忽然大悟。",
    "T47n1997_017:0791c07_4": "師云。",
    "T47n1997_017:0791c07_5": "道吾橫身為物指出生死根源親到寶山。",
    "T47n1997_017:0791c08_6": "一問當面蹉却。",
    "T47n1997_017:0791c09_7": "若不是金剛正性宿植根深。",
    "T47n1997_017:0791c09_8": "爭得向平田淺草驀地回光。",
    "T47n1997_017:0791c10_9": "見得道吾著力相為處。",
    "T47n1997_017:0791c11_10": "目作麼生是道吾著力相為處。",
    "T47n1997_017:0791c11_11": "試請道看。",
    "T47n1997_017:0791c12_0": "舉。",
    "T47n1997_017:0791c12_1": "僧問鏡清。",
    "T47n1997_017:0791c12_2": "新年頭還有佛法也無。",
    "T47n1997_017:0791c12_3": "清云有。",
    "T47n1997_017:0791c13_0": "僧云。",
    "T47n1997_017:0791c13_1": "如何是新年頭佛法。",
    "T47n1997_017:0791c13_2": "清云。",
    "T47n1997_017:0791c13_3": "元正啟祚。",
    "T47n1997_017:0791c13_4": "僧云。",
    "T47n1997_017:0791c14_5": "謝師答話。",
    "T47n1997_017:0791c14_6": "清云。",
    "T47n1997_017:0791c14_7": "鏡清今日失利。",
    "T47n1997_017:0791c14_8": "又僧問明教。",
    "T47n1997_017:0791c15_9": "新年頭還有佛法也無。",
    "T47n1997_017:0791c15_10": "教云無。",
    "T47n1997_017:0791c15_11": "僧云。",
    "T47n1997_017:0791c15_12": "年年是好年。",
    "T47n1997_017:0791c16_13": "為什麼却無。",
    "T47n1997_017:0791c16_14": "教云。",
    "T47n1997_017:0791c16_15": "張翁喫酒李翁醉。",
    "T47n1997_017:0791c17_0": "僧云。",
    "T47n1997_017:0791c17_1": "老老大大龍頭蛇尾。",
    "T47n1997_017:0791c17_2": "教云。",
    "T47n1997_017:0791c17_3": "明教今日失利。",
    "T47n1997_017:0791c18_4": "師云。",
    "T47n1997_017:0791c18_5": "鏡清道有也失利。",
    "T47n1997_017:0791c18_6": "明教道無也失利。",
    "T47n1997_017:0791c19_0": "且道。",
    "T47n1997_017:0791c19_1": "誵訛在什麼處。",
    "T47n1997_017:0791c19_2": "若明得去。",
    "T47n1997_017:0791c19_3": "不妨識進退別休咎。",
    "T47n1997_017:0791c20_4": "始知一句下有分身之意。",
    "T47n1997_017:0791c20_5": "有出身之路。",
    "T47n1997_017:0791c21_6": "今日崇寧忽有人問。",
    "T47n1997_017:0791c21_7": "新年頭還有佛法也無。",
    "T47n1997_017:0791c22_8": "對他道。",
    "T47n1997_017:0791c22_9": "不在這兩頭。",
    "T47n1997_017:0791c22_10": "他或道。",
    "T47n1997_017:0791c22_11": "為什麼如此。",
    "T47n1997_017:0791c23_12": "崇寧今日失利。",
    "T47n1997_017:0791c23_13": "且道。",
    "T47n1997_017:0791c23_14": "與古人是同是別。",
    "T47n1997_017:0791c24_0": "舉。",
    "T47n1997_017:0791c24_1": "靈雲見桃華悟道頌。",
    "T47n1997_017:0791c24_2": "三十年來尋劍客。",
    "T47n1997_017:0791c24_3": "幾回葉落又抽枝。",
    "T47n1997_017:0791c25_4": "自從一見桃華後。",
    "T47n1997_017:0791c25_5": "直至如今更不疑。",
    "T47n1997_017:0791c26_6": "玄沙云。",
    "T47n1997_017:0791c26_7": "諦當甚諦當。",
    "T47n1997_017:0791c26_8": "敢保老兄未徹在。",
    "T47n1997_017:0791c27_9": "師云。",
    "T47n1997_017:0791c27_10": "千鈞之弩不為鼷鼠發機。",
    "T47n1997_017:0791c27_11": "靈雲既撥動天關。",
    "T47n1997_017:0791c28_12": "玄沙乃掀翻地軸。",
    "T47n1997_017:0791c28_13": "且道。",
    "T47n1997_017:0791c28_14": "那箇是未徹處。",
    "T47n1997_017:0791c29_15": "具透關眼者試請辨看。",
    "T47n1997_017:0792a01_0": "舉。",
    "T47n1997_017:0792a01_1": "遵布衲在藥山浴佛次。",
    "T47n1997_017:0792a01_2": "山云。",
    "T47n1997_017:0792a01_3": "爾浴得這箇。",
    "T47n1997_017:0792a02_0": "還浴得那箇麼。",
    "T47n1997_017:0792a02_1": "遵云。",
    "T47n1997_017:0792a02_2": "把將那箇來。",
    "T47n1997_017:0792a02_3": "師云。",
    "T47n1997_017:0792a02_4": "藥山問處闇隔重關。",
    "T47n1997_017:0792a03_5": "遵老答來一槌兩當。",
    "T47n1997_017:0792a03_6": "不可只守這一路也。",
    "T47n1997_017:0792a04_7": "或有問崇寧。",
    "T47n1997_017:0792a04_8": "只浴得這箇。",
    "T47n1997_017:0792a04_9": "還浴得那箇麼。",
    "T47n1997_017:0792a05_10": "提起杓子向伊道。",
    "T47n1997_017:0792a05_11": "何似生。",
    "T47n1997_017:0792a06_0": "舉。",
    "T47n1997_017:0792a06_1": "古者道。",
    "T47n1997_017:0792a06_2": "護生須是殺。",
    "T47n1997_017:0792a06_3": "殺盡始安居。",
    "T47n1997_017:0792a06_4": "會得箇中意。",
    "T47n1997_017:0792a07_5": "鐵船水上浮。",
    "T47n1997_017:0792a07_6": "師云。",
    "T47n1997_017:0792a07_7": "且道。",
    "T47n1997_017:0792a07_8": "殺箇什麼。",
    "T47n1997_017:0792a07_9": "殺眾生物命。",
    "T47n1997_017:0792a08_10": "凡夫見解殺六賊煩惱。",
    "T47n1997_017:0792a08_11": "座主見解。",
    "T47n1997_017:0792a09_0": "殺佛殺祖。",
    "T47n1997_017:0792a09_1": "大闡提人見解。",
    "T47n1997_017:0792a09_2": "衲僧分上畢竟殺箇什麼。",
    "T47n1997_017:0792a10_3": "試定當看。",
    "T47n1997_017:0792a11_0": "舉。",
    "T47n1997_017:0792a11_1": "世尊於一處安居。",
    "T47n1997_017:0792a11_2": "至自恣日文殊在會。",
    "T47n1997_017:0792a11_3": "迦葉問文殊。",
    "T47n1997_017:0792a12_4": "何處安居。",
    "T47n1997_017:0792a12_5": "文殊云。",
    "T47n1997_017:0792a12_6": "今夏三處安居。",
    "T47n1997_017:0792a13_0": "迦葉於是集眾白槌欲擯文殊。",
    "T47n1997_017:0792a13_1": "即見無量世界。",
    "T47n1997_017:0792a14_2": "一一界中有一一佛一一文殊一一迦葉。",
    "T47n1997_017:0792a15_0": "白槌欲擯文殊。",
    "T47n1997_017:0792a15_1": "世尊謂迦葉云。",
    "T47n1997_017:0792a15_2": "汝今欲擯那箇文殊。",
    "T47n1997_017:0792a16_3": "迦葉茫然。",
    "T47n1997_017:0792a16_4": "師云。",
    "T47n1997_017:0792a16_5": "鐘不擊不響。",
    "T47n1997_017:0792a16_6": "鼓不打不鳴。",
    "T47n1997_017:0792a17_7": "迦葉既把斷要津。",
    "T47n1997_017:0792a17_8": "文殊乃十方坐斷。",
    "T47n1997_017:0792a17_9": "當時好一場佛事。",
    "T47n1997_017:0792a18_10": "放過一著。",
    "T47n1997_017:0792a18_11": "待釋迦老子道欲擯那箇文殊。",
    "T47n1997_017:0792a19_12": "便與擊一槌。",
    "T47n1997_017:0792a19_13": "看他作麼生合殺。",
    "T47n1997_017:0792a21_0": "舉。",
    "T47n1997_017:0792a21_1": "石室見僧來拈起拄杖云。",
    "T47n1997_017:0792a21_2": "過去諸佛也恁麼。",
    "T47n1997_017:0792a22_3": "現在諸佛也恁麼。",
    "T47n1997_017:0792a22_4": "未來諸佛也恁麼。",
    "T47n1997_017:0792a22_5": "長沙云。",
    "T47n1997_017:0792a23_6": "放下拄杖子。",
    "T47n1997_017:0792a23_7": "別通箇消息來。",
    "T47n1997_017:0792a23_8": "師云。",
    "T47n1997_017:0792a23_9": "石室置箇問端。",
    "T47n1997_017:0792a24_10": "不妨孤峻。",
    "T47n1997_017:0792a24_11": "若非長沙。",
    "T47n1997_017:0792a24_12": "爭得投機。",
    "T47n1997_017:0792a24_13": "雖然只知恁麼。",
    "T47n1997_017:0792a25_14": "不知不恁麼。",
    "T47n1997_017:0792a25_15": "遂舉拄杖云。",
    "T47n1997_017:0792a25_16": "過去諸佛不恁麼。",
    "T47n1997_017:0792a26_17": "現在諸佛不恁麼。",
    "T47n1997_017:0792a26_18": "未來諸佛不恁麼。",
    "T47n1997_017:0792a27_19": "或若總道放下拄杖子。",
    "T47n1997_017:0792a27_20": "我也知爾只是學語之流。",
    "T47n1997_017:0792a28_21": "生機處道將一句來。",
    "T47n1997_017:0792a29_0": "舉。",
    "T47n1997_017:0792a29_1": "保壽開堂。",
    "T47n1997_017:0792a29_2": "三聖推出一僧。",
    "T47n1997_017:0792a29_3": "壽便打。",
    "T47n1997_017:0792a29_4": "三聖云。",
    "T47n1997_017:0792b01_5": "恁麼為人。",
    "T47n1997_017:0792b01_6": "非但瞎却這僧眼。",
    "T47n1997_017:0792b01_7": "瞎却鎮州一城人眼去在。",
    "T47n1997_017:0792b02_8": "保壽擲拄杖下座。",
    "T47n1997_017:0792b02_9": "師云。",
    "T47n1997_017:0792b02_10": "保壽大似毒龍攪海。",
    "T47n1997_017:0792b03_11": "直得雨似傾盆。",
    "T47n1997_017:0792b03_12": "三聖雖雷震青霄。",
    "T47n1997_017:0792b04_13": "焉助得威光一半。",
    "T47n1997_017:0792b04_14": "可中有箇直下承當。",
    "T47n1997_017:0792b05_0": "非但瞎却鎮州一城人眼。",
    "T47n1997_017:0792b05_1": "瞎却天下人眼去在。",
    "T47n1997_017:0792b07_0": "舉。",
    "T47n1997_017:0792b07_1": "傅大士云。",
    "T47n1997_017:0792b07_2": "終日焚香擇火。",
    "T47n1997_017:0792b07_3": "不知身是道場。",
    "T47n1997_017:0792b08_0": "玄沙云。",
    "T47n1997_017:0792b08_1": "終日焚香擇火。",
    "T47n1997_017:0792b08_2": "不知真箇道場。",
    "T47n1997_017:0792b08_3": "師云。",
    "T47n1997_017:0792b09_0": "終日焚香擇火。",
    "T47n1997_017:0792b09_1": "不知焚香擇火。",
    "T47n1997_017:0792b10_0": "舉。",
    "T47n1997_017:0792b10_1": "僧問長慶。",
    "T47n1997_017:0792b10_2": "有問有答賓主歷然。",
    "T47n1997_017:0792b10_3": "無問無答時如何。",
    "T47n1997_017:0792b11_4": "慶云。",
    "T47n1997_017:0792b11_5": "怕爛却那。",
    "T47n1997_017:0792b11_6": "僧問睦州。",
    "T47n1997_017:0792b11_7": "有問有答賓主歷然。",
    "T47n1997_017:0792b12_8": "無問無答時如何。",
    "T47n1997_017:0792b12_9": "州云。",
    "T47n1997_017:0792b12_10": "相逢盡道休官去。",
    "T47n1997_017:0792b13_11": "林下何曾見一人。",
    "T47n1997_017:0792b13_12": "師云。",
    "T47n1997_017:0792b13_13": "若問崇寧。",
    "T47n1997_017:0792b13_14": "有問有答賓主歷然。",
    "T47n1997_017:0792b14_15": "無問無答時如何。",
    "T47n1997_017:0792b14_16": "對他道。",
    "T47n1997_017:0792b15_0": "收得安南又憂塞北。",
    "T47n1997_017:0792b16_0": "舉。",
    "T47n1997_017:0792b16_1": "睦州陞座云。",
    "T47n1997_017:0792b16_2": "首座[口*尒]。",
    "T47n1997_017:0792b16_3": "答云在。",
    "T47n1997_017:0792b16_4": "寺主[口*尒]。",
    "T47n1997_017:0792b16_5": "答云在。",
    "T47n1997_017:0792b17_6": "維那[口*尒]。",
    "T47n1997_017:0792b17_7": "答云在。",
    "T47n1997_017:0792b17_8": "州云。",
    "T47n1997_017:0792b17_9": "三段不同。",
    "T47n1997_017:0792b17_10": "今當第一。",
    "T47n1997_017:0792b18_11": "向下文長。",
    "T47n1997_017:0792b18_12": "付在來日。",
    "T47n1997_017:0792b18_13": "師云。",
    "T47n1997_017:0792b18_14": "一等是借路經過。",
    "T47n1997_017:0792b19_15": "就中奇怪。",
    "T47n1997_017:0792b19_16": "若是崇寧又且不然。",
    "T47n1997_017:0792b19_17": "首座[口*尒]在。",
    "T47n1997_017:0792b20_18": "寺主[口*尒]在。",
    "T47n1997_017:0792b20_19": "維那[口*尒]在。",
    "T47n1997_017:0792b20_20": "因行不妨掉臂。",
    "T47n1997_017:0792b20_21": "打草只要驚蛇。",
    "T47n1997_017:0792b21_22": "若能一撥便轉。",
    "T47n1997_017:0792b21_23": "免致撒土撒沙。",
    "T47n1997_017:0792b22_0": "舉。",
    "T47n1997_017:0792b22_1": "長慶示眾云。",
    "T47n1997_017:0792b22_2": "撞著道伴交肩過。",
    "T47n1997_017:0792b22_3": "一生參學事畢。",
    "T47n1997_017:0792b23_4": "師拈云。",
    "T47n1997_017:0792b23_5": "撞著道伴交肩過。",
    "T47n1997_017:0792b23_6": "露柱燈籠共證明。",
    "T47n1997_017:0792b25_0": "舉。",
    "T47n1997_017:0792b25_1": "南泉示眾云。",
    "T47n1997_017:0792b25_2": "文殊普賢昨夜起佛見法見。",
    "T47n1997_017:0792b26_0": "各與二十棒。",
    "T47n1997_017:0792b26_1": "貶向二鐵圍山去也。",
    "T47n1997_017:0792b26_2": "趙州出云。",
    "T47n1997_017:0792b27_0": "和尚棒教誰喫。",
    "T47n1997_017:0792b27_1": "泉云。",
    "T47n1997_017:0792b27_2": "王老師有什麼過。",
    "T47n1997_017:0792b27_3": "州禮拜。",
    "T47n1997_017:0792b28_4": "南泉便歸方丈。",
    "T47n1997_017:0792b28_5": "師拈云。",
    "T47n1997_017:0792b28_6": "南泉動絃。",
    "T47n1997_017:0792b28_7": "趙州別曲。",
    "T47n1997_017:0792b29_8": "苦痛蒼天。",
    "T47n1997_017:0792b29_9": "寒山拾得。",
    "T47n1997_017:0792b29_10": "若是崇寧則不然。",
    "T47n1997_017:0792b29_11": "燈籠露柱昨夜起佛見法見。",
    "T47n1997_017:0792c01_12": "各與二十棒。",
    "T47n1997_017:0792c01_13": "令歸本位去也。",
    "T47n1997_017:0792c02_14": "或有箇出云和尚棒教誰喫。",
    "T47n1997_017:0792c02_15": "只對他道。",
    "T47n1997_017:0792c03_16": "落賓落主。",
    "T47n1997_017:0792c04_0": "舉。",
    "T47n1997_017:0792c04_1": "古者道。",
    "T47n1997_017:0792c04_2": "十五日已前不得住我這裏。",
    "T47n1997_017:0792c04_3": "爾若住我這裏。",
    "T47n1997_017:0792c05_4": "我用錐錐爾。",
    "T47n1997_017:0792c05_5": "十五日已後不得離我這裏。",
    "T47n1997_017:0792c06_6": "爾若離我這裏。",
    "T47n1997_017:0792c06_7": "我用鉤鉤爾。",
    "T47n1997_017:0792c06_8": "正當十五日。",
    "T47n1997_017:0792c07_9": "且道。",
    "T47n1997_017:0792c07_10": "用錐即是用鉤即是。",
    "T47n1997_017:0792c07_11": "師拈云。",
    "T47n1997_017:0792c07_12": "放行處把住。",
    "T47n1997_017:0792c08_13": "把住處放行。",
    "T47n1997_017:0792c08_14": "是則是。",
    "T47n1997_017:0792c08_15": "為人鉗鍵爭奈傷鋒犯手。",
    "T47n1997_017:0792c09_16": "若是崇寧則不然。",
    "T47n1997_017:0792c09_17": "十五日已前不得住我這裏。",
    "T47n1997_017:0792c10_18": "爾若住我這裏。",
    "T47n1997_017:0792c10_19": "我放火燒爾。",
    "T47n1997_017:0792c11_0": "十五日已後不得離我這裏。",
    "T47n1997_017:0792c11_1": "爾若離我這裏。",
    "T47n1997_017:0792c12_0": "我放火燒爾。",
    "T47n1997_017:0792c12_1": "正當十五日。",
    "T47n1997_017:0792c12_2": "化為萬斛明珠。",
    "T47n1997_017:0792c13_0": "撒在大千沙界。",
    "T47n1997_017:0792c13_1": "處處盡放光明。",
    "T47n1997_017:0792c13_2": "各各急須著眼。",
    "T47n1997_017:0792c15_0": "舉。",
    "T47n1997_017:0792c15_1": "昔日摩耶夫人聖母左手攀枝。",
    "T47n1997_017:0792c15_2": "釋迦老子右脇降誕。",
    "T47n1997_017:0792c16_3": "九龍吐水沐浴金軀。",
    "T47n1997_017:0792c16_4": "便乃周行七步目顧四方。",
    "T47n1997_017:0792c17_5": "一手指天一手指地。",
    "T47n1997_017:0792c17_6": "作大師子吼云。",
    "T47n1997_017:0792c18_7": "天上天下惟我獨尊。",
    "T47n1997_017:0792c18_8": "後來雲門大師道。",
    "T47n1997_017:0792c19_0": "我當時若見。",
    "T47n1997_017:0792c19_1": "一棒打殺。",
    "T47n1997_017:0792c19_2": "與狗子喫。",
    "T47n1997_017:0792c19_3": "貴圖天下太平。",
    "T47n1997_017:0792c20_4": "師拈云。",
    "T47n1997_017:0792c20_5": "驚群之句。",
    "T47n1997_017:0792c20_6": "須向驚群處舉揚。",
    "T47n1997_017:0792c20_7": "奇特之事。",
    "T47n1997_017:0792c21_8": "須遇奇特人前拈出。",
    "T47n1997_017:0792c21_9": "釋迦老子可謂驚群。",
    "T47n1997_017:0792c22_10": "雲門大師不妨奇特。",
    "T47n1997_017:0792c22_11": "直下以不可測度底機輪。",
    "T47n1997_017:0792c23_12": "向千聖頂[寧*頁]上撥轉。",
    "T47n1997_017:0792c23_13": "若能恁麼體會。",
    "T47n1997_017:0792c24_0": "始知釋迦把斷要津。",
    "T47n1997_017:0792c24_1": "雲門知恩解報且道。",
    "T47n1997_017:0792c24_2": "落在什麼處。",
    "T47n1997_017:0792c25_3": "還會麼。",
    "T47n1997_017:0792c25_4": "棒頭有眼明如日。",
    "T47n1997_017:0792c25_5": "要識真金火裏看。",
    "T47n1997_017:0792c27_0": "舉。",
    "T47n1997_017:0792c27_1": "外道問佛。",
    "T47n1997_017:0792c27_2": "不問有言不問無言。",
    "T47n1997_017:0792c27_3": "世尊良久。",
    "T47n1997_017:0792c28_0": "外道禮拜讚歎云。",
    "T47n1997_017:0792c28_1": "世尊大慈大悲。",
    "T47n1997_017:0792c28_2": "開我迷雲。",
    "T47n1997_017:0792c29_0": "令我得入。",
    "T47n1997_017:0792c29_1": "外道去後阿難問佛。",
    "T47n1997_017:0792c29_2": "外道有何所證而言得入。",
    "T47n1997_017:0793a01_3": "世尊云。",
    "T47n1997_017:0793a01_4": "如世良馬見鞭影而行。",
    "T47n1997_017:0793a02_0": "師拈云。",
    "T47n1997_017:0793a02_1": "外道因邪打正。",
    "T47n1997_017:0793a02_2": "世尊看樓打樓。",
    "T47n1997_017:0793a02_3": "阿難不善旁觀。",
    "T47n1997_017:0793a03_4": "引得世尊拕泥帶水。",
    "T47n1997_017:0793a03_5": "若據山僧見處。",
    "T47n1997_017:0793a04_6": "待伊道不問有言不問無言。",
    "T47n1997_017:0793a04_7": "和聲便打。",
    "T47n1997_017:0793a04_8": "及至阿難問外道有何所證而言得入。",
    "T47n1997_017:0793a05_9": "亦和聲便打。",
    "T47n1997_017:0793a06_10": "何故。",
    "T47n1997_017:0793a06_11": "殺人須是殺人刀。",
    "T47n1997_017:0793a06_12": "活人須是活人劍。",
    "T47n1997_017:0793a08_0": "舉。",
    "T47n1997_017:0793a08_1": "祖師道。",
    "T47n1997_017:0793a08_2": "正說知見時。",
    "T47n1997_017:0793a08_3": "知見即是心。",
    "T47n1997_017:0793a08_4": "當心即知見。",
    "T47n1997_017:0793a09_5": "知見即如今。",
    "T47n1997_017:0793a09_6": "師拈云。",
    "T47n1997_017:0793a09_7": "若明心達本。",
    "T47n1997_017:0793a09_8": "知見歷然。",
    "T47n1997_017:0793a10_9": "正說正行。",
    "T47n1997_017:0793a10_10": "當陽顯赫。",
    "T47n1997_017:0793a10_11": "且作麼生是即如今底事。",
    "T47n1997_017:0793a11_12": "大家齊著力。",
    "T47n1997_017:0793a11_13": "共唱太平歌。",
    "T47n1997_017:0793a12_0": "舉。",
    "T47n1997_017:0793a12_1": "僧問馬祖。",
    "T47n1997_017:0793a12_2": "如何是祖師西來意。",
    "T47n1997_017:0793a12_3": "祖云。",
    "T47n1997_017:0793a12_4": "近前來向爾道。",
    "T47n1997_017:0793a13_5": "僧近前。",
    "T47n1997_017:0793a13_6": "祖劈耳便掌云。",
    "T47n1997_017:0793a13_7": "六耳不同謀。",
    "T47n1997_017:0793a14_8": "後來南禪師道。",
    "T47n1997_017:0793a14_9": "古人尚六耳不同謀。",
    "T47n1997_017:0793a14_10": "那堪三二百眾浩浩地商量。",
    "T47n1997_017:0793a15_11": "禍事禍事。",
    "T47n1997_017:0793a15_12": "師拈云。",
    "T47n1997_017:0793a15_13": "南禪不妨因風吹火。",
    "T47n1997_017:0793a16_14": "也未免隨語生解。",
    "T47n1997_017:0793a16_15": "若有問道林。",
    "T47n1997_017:0793a17_16": "如何是祖師西來意。",
    "T47n1997_017:0793a17_17": "只對他道。",
    "T47n1997_017:0793a17_18": "水長船高泥多佛大。",
    "T47n1997_017:0793a19_0": "舉。",
    "T47n1997_017:0793a19_1": "泰首座到洞山。",
    "T47n1997_017:0793a19_2": "值喫果子。",
    "T47n1997_017:0793a19_3": "洞山云。",
    "T47n1997_017:0793a19_4": "有一物上拄天下拄地。",
    "T47n1997_017:0793a20_5": "常在動用中。",
    "T47n1997_017:0793a20_6": "動用中收不得。",
    "T47n1997_017:0793a21_0": "未審過在什麼處。",
    "T47n1997_017:0793a21_1": "泰云。",
    "T47n1997_017:0793a21_2": "過在動用。",
    "T47n1997_017:0793a21_3": "洞山云。",
    "T47n1997_017:0793a21_4": "侍者掇退果卓。",
    "T47n1997_017:0793a22_5": "師拈云。",
    "T47n1997_017:0793a22_6": "天下衲僧盡道。",
    "T47n1997_017:0793a22_7": "泰首座箭鋒不相拄。",
    "T47n1997_017:0793a23_8": "所以遭洞山貶剝。",
    "T47n1997_017:0793a23_9": "後來溈山真如道。",
    "T47n1997_017:0793a24_10": "此果子莫道泰首座不得喫。",
    "T47n1997_017:0793a24_11": "三世諸佛也不敢正眼覷著。",
    "T47n1997_017:0793a25_12": "師云。",
    "T47n1997_017:0793a25_13": "宗師家。",
    "T47n1997_017:0793a25_14": "正令當行十方坐斷。",
    "T47n1997_017:0793a26_15": "有定乾坤句辨龍蛇眼。",
    "T47n1997_017:0793a26_16": "不妨難趁。",
    "T47n1997_017:0793a26_17": "當時若是英靈衲子。",
    "T47n1997_017:0793a27_18": "解捋虎鬚。",
    "T47n1997_017:0793a27_19": "待他道過在什麼處。",
    "T47n1997_017:0793a28_20": "便拈起果子云。",
    "T47n1997_017:0793a28_21": "和尚畢竟喚作什麼。",
    "T47n1997_017:0793a28_22": "待他擬議。",
    "T47n1997_017:0793a29_23": "劈面便擲。",
    "T47n1997_017:0793a29_24": "何故。",
    "T47n1997_017:0793a29_25": "有意氣時添意氣。",
    "T47n1997_017:0793a29_26": "不風流處也風流。",
    "T47n1997_017:0793b02_0": "舉。",
    "T47n1997_017:0793b02_1": "雲門示眾云。",
    "T47n1997_017:0793b02_2": "結夏得數日也。",
    "T47n1997_017:0793b02_3": "寒山子作麼生。",
    "T47n1997_017:0793b03_4": "大溈真如道。",
    "T47n1997_017:0793b03_5": "結夏得數日也。",
    "T47n1997_017:0793b03_6": "水牯牛作麼生。",
    "T47n1997_017:0793b04_7": "師拈云。",
    "T47n1997_017:0793b04_8": "結夏得數日也。",
    "T47n1997_017:0793b04_9": "諸上座作麼生。",
    "T47n1997_017:0793b04_10": "復云。",
    "T47n1997_017:0793b05_11": "寒山子意在鉤頭。",
    "T47n1997_017:0793b05_12": "水牯牛事在函蓋。",
    "T47n1997_017:0793b05_13": "且道。",
    "T47n1997_017:0793b06_0": "諸上座。",
    "T47n1997_017:0793b06_1": "落在什麼處。",
    "T47n1997_017:0793b06_2": "惜取眉毛。",
    "T47n1997_017:0793b07_0": "舉。",
    "T47n1997_017:0793b07_1": "洞山與密師伯到柏巖。",
    "T47n1997_017:0793b07_2": "巖門。",
    "T47n1997_017:0793b07_3": "二上座在什麼處來。",
    "T47n1997_017:0793b08_4": "山云。",
    "T47n1997_017:0793b08_5": "湖南來。",
    "T47n1997_017:0793b08_6": "巖云。",
    "T47n1997_017:0793b08_7": "觀察使姓什麼。",
    "T47n1997_017:0793b09_0": "山云。",
    "T47n1997_017:0793b09_1": "不委他姓。",
    "T47n1997_017:0793b09_2": "巖云。",
    "T47n1997_017:0793b09_3": "名什麼。",
    "T47n1997_017:0793b09_4": "山云。",
    "T47n1997_017:0793b09_5": "不委他名。",
    "T47n1997_017:0793b10_6": "巖云。",
    "T47n1997_017:0793b10_7": "還理事也無。",
    "T47n1997_017:0793b10_8": "山云。",
    "T47n1997_017:0793b10_9": "自有廊幕在。",
    "T47n1997_017:0793b10_10": "巖云。",
    "T47n1997_017:0793b11_11": "還出入否。",
    "T47n1997_017:0793b11_12": "山云。",
    "T47n1997_017:0793b11_13": "不出入。",
    "T47n1997_017:0793b11_14": "巖云。",
    "T47n1997_017:0793b11_15": "豈不出入。",
    "T47n1997_017:0793b12_0": "山拂袖出去。",
    "T47n1997_017:0793b12_1": "巖至來日。",
    "T47n1997_017:0793b12_2": "侵早入堂。",
    "T47n1997_017:0793b12_3": "召二上座。",
    "T47n1997_017:0793b13_0": "二人近前。",
    "T47n1997_017:0793b13_1": "巖云。",
    "T47n1997_017:0793b13_2": "昨日問上座話。",
    "T47n1997_017:0793b13_3": "不愜老僧意。",
    "T47n1997_017:0793b14_0": "一夜不安。",
    "T47n1997_017:0793b14_1": "今請上座。",
    "T47n1997_017:0793b14_2": "別一轉語。",
    "T47n1997_017:0793b14_3": "若契老僧意。",
    "T47n1997_017:0793b15_0": "便開粥飯。",
    "T47n1997_017:0793b15_1": "相伴過夏。",
    "T47n1997_017:0793b15_2": "山云。",
    "T47n1997_017:0793b15_3": "却請和尚問。",
    "T47n1997_017:0793b15_4": "巖云。",
    "T47n1997_017:0793b16_5": "不出入。",
    "T47n1997_017:0793b16_6": "山云。",
    "T47n1997_017:0793b16_7": "太尊貴生。",
    "T47n1997_017:0793b16_8": "巖乃開粥同過夏。",
    "T47n1997_017:0793b17_9": "師拈云。",
    "T47n1997_017:0793b17_10": "正偏回互只要圓融。",
    "T47n1997_017:0793b17_11": "直截當機惟崇尊貴。",
    "T47n1997_017:0793b18_12": "洞山觀機而作。",
    "T47n1997_017:0793b18_13": "柏巖理長則就。",
    "T47n1997_017:0793b18_14": "雖然如是。",
    "T47n1997_017:0793b19_15": "曹洞門下即得。",
    "T47n1997_017:0793b19_16": "若於臨濟宗中。",
    "T47n1997_017:0793b19_17": "須別作箇眼目始得。",
    "T47n1997_017:0793b20_18": "當時待伊道不委名。",
    "T47n1997_017:0793b20_19": "便向伊道。",
    "T47n1997_017:0793b21_0": "他不委爾。",
    "T47n1997_017:0793b21_1": "爾不委他。",
    "T47n1997_017:0793b21_2": "敢問。",
    "T47n1997_017:0793b21_3": "合道得什麼語。",
    "T47n1997_017:0793b21_4": "還有人道得麼。",
    "T47n1997_017:0793b22_5": "若有。",
    "T47n1997_017:0793b22_6": "山僧也不開粥。",
    "T47n1997_017:0793b22_7": "只分付箇龜毛拂子。",
    "T47n1997_017:0793b23_8": "若道不得。",
    "T47n1997_017:0793b23_9": "且參三十年。",
    "T47n1997_017:0793b24_0": "舉。",
    "T47n1997_017:0793b24_1": "僧問趙州。",
    "T47n1997_017:0793b24_2": "萬法歸一。",
    "T47n1997_017:0793b24_3": "一歸何處。",
    "T47n1997_017:0793b24_4": "州云。",
    "T47n1997_017:0793b24_5": "我在青州作一領布衫。",
    "T47n1997_017:0793b25_6": "重七斤。",
    "T47n1997_017:0793b25_7": "師拈云。",
    "T47n1997_017:0793b25_8": "摩醯三眼。",
    "T47n1997_017:0793b26_9": "一句洞明。",
    "T47n1997_017:0793b26_10": "似海朝宗。",
    "T47n1997_017:0793b26_11": "千途共轍。",
    "T47n1997_017:0793b26_12": "雖然如是。",
    "T47n1997_017:0793b27_13": "更有一著在。",
    "T47n1997_017:0793b27_14": "忽有問蔣山。",
    "T47n1997_017:0793b27_15": "萬法歸一一歸何處。",
    "T47n1997_017:0793b28_16": "只對他道。",
    "T47n1997_017:0793b28_17": "饑來喫飯困來眠。",
    "T47n1997_017:0793b29_0": "舉。",
    "T47n1997_017:0793b29_1": "道吾漸源至一家弔慰。",
    "T47n1997_017:0793b29_2": "源撫棺木云。",
    "T47n1997_017:0793b29_3": "生耶死耶。",
    "T47n1997_017:0793c01_4": "吾云。",
    "T47n1997_017:0793c01_5": "生也不道死也不道。",
    "T47n1997_017:0793c01_6": "源云。",
    "T47n1997_017:0793c01_7": "為什麼不道。",
    "T47n1997_017:0793c02_8": "吾云。",
    "T47n1997_017:0793c02_9": "不道不道。",
    "T47n1997_017:0793c02_10": "行至中路。",
    "T47n1997_017:0793c02_11": "源云。",
    "T47n1997_017:0793c02_12": "請和尚為某甲道。",
    "T47n1997_017:0793c03_13": "若不道則打和尚去也。",
    "T47n1997_017:0793c03_14": "吾云。",
    "T47n1997_017:0793c04_0": "打即任打。",
    "T47n1997_017:0793c04_1": "道即不道。",
    "T47n1997_017:0793c04_2": "師拈云。",
    "T47n1997_017:0793c04_3": "銀山鐵壁有什麼階昇處。",
    "T47n1997_017:0793c05_4": "山僧今夜錦上鋪華。",
    "T47n1997_017:0793c05_5": "八字打開。",
    "T47n1997_017:0793c05_6": "商量這公案去也。",
    "T47n1997_017:0793c06_7": "生也全機現。",
    "T47n1997_017:0793c06_8": "死也全機現。",
    "T47n1997_017:0793c06_9": "不道復不道。",
    "T47n1997_017:0793c07_10": "箇中無背面。",
    "T47n1997_017:0793c07_11": "直下便承當。",
    "T47n1997_017:0793c07_12": "不隔一條線。",
    "T47n1997_017:0793c08_13": "逼塞大虛空。",
    "T47n1997_017:0793c08_14": "赤心常片片。",
    "T47n1997_017:0793c09_0": "舉。",
    "T47n1997_017:0793c09_1": "南際到雪峯經月次見玄沙。",
    "T47n1997_017:0793c09_2": "沙云。",
    "T47n1997_017:0793c09_3": "長老唯我能知。",
    "T47n1997_017:0793c10_4": "際云。",
    "T47n1997_017:0793c10_5": "須知有不求知者。",
    "T47n1997_017:0793c10_6": "沙云。",
    "T47n1997_017:0793c10_7": "山頭老漢。",
    "T47n1997_017:0793c11_8": "費許多氣力作麼。",
    "T47n1997_017:0793c11_9": "師拈云。",
    "T47n1997_017:0793c11_10": "玄沙放去太嶮收來太速。",
    "T47n1997_017:0793c12_11": "若據金山則不然。",
    "T47n1997_017:0793c12_12": "此事唯我能知。",
    "T47n1997_017:0793c13_0": "須知有不求知者。",
    "T47n1997_017:0793c13_1": "只向他道。",
    "T47n1997_017:0793c13_2": "也知長老不分外。",
    "T47n1997_017:0793c14_3": "還委悉麼。",
    "T47n1997_017:0793c14_4": "一鏃破三關。",
    "T47n1997_017:0793c14_5": "分明箭後路。",
    "T47n1997_017:0793c14_6": "舉。",
    "T47n1997_017:0793c15_0": "僧問巴陵。",
    "T47n1997_017:0793c15_1": "如何是道。",
    "T47n1997_017:0793c15_2": "陵云。",
    "T47n1997_017:0793c15_3": "明眼人落井。",
    "T47n1997_017:0793c15_4": "僧問石頭。",
    "T47n1997_017:0793c16_5": "如何是道。",
    "T47n1997_017:0793c16_6": "頭云。",
    "T47n1997_017:0793c16_7": "木頭。",
    "T47n1997_017:0793c16_8": "僧又問韶國師。",
    "T47n1997_017:0793c17_0": "如何是道。",
    "T47n1997_017:0793c17_1": "國師云。",
    "T47n1997_017:0793c17_2": "四生浩浩。",
    "T47n1997_017:0793c17_3": "師拈云。",
    "T47n1997_017:0793c17_4": "宗師家為人。",
    "T47n1997_017:0793c18_5": "各有出身處。",
    "T47n1997_017:0793c18_6": "若是通方之士。",
    "T47n1997_017:0793c18_7": "一舉便知。",
    "T47n1997_017:0793c19_0": "苟未相諳。",
    "T47n1997_017:0793c19_1": "不免指注。",
    "T47n1997_017:0793c19_2": "只如一箇問頭三人恁麼答。",
    "T47n1997_017:0793c20_3": "且道。",
    "T47n1997_017:0793c20_4": "是那一句親切。",
    "T47n1997_017:0793c20_5": "還委悉麼。",
    "T47n1997_017:0793c20_6": "一鏃破三關。",
    "T47n1997_017:0793c21_7": "分明箭後路。",
    "T47n1997_017:0793c22_0": "舉。",
    "T47n1997_017:0793c22_1": "僧問香林。",
    "T47n1997_017:0793c22_2": "如何是衲衣下事。",
    "T47n1997_017:0793c22_3": "林云。",
    "T47n1997_017:0793c22_4": "臘月火燒山。",
    "T47n1997_017:0793c23_5": "雪竇云。",
    "T47n1997_017:0793c23_6": "臘月火燒山。",
    "T47n1997_017:0793c23_7": "萬種千般。",
    "T47n1997_017:0793c23_8": "翹松鶴冷踏雪人寒。",
    "T47n1997_017:0793c24_9": "達磨不會大難大難。",
    "T47n1997_017:0793c24_10": "師拈云。",
    "T47n1997_017:0793c24_11": "大小雪竇。",
    "T47n1997_017:0793c25_12": "隨婁漱不能截斷誵訛。",
    "T47n1997_017:0793c25_13": "若是道林即不然。",
    "T47n1997_017:0793c26_14": "臘月火燒山。",
    "T47n1997_017:0793c26_15": "特地無端。",
    "T47n1997_017:0793c26_16": "綿包特石鐵裏泥團。",
    "T47n1997_017:0793c28_0": "舉。",
    "T47n1997_017:0793c28_1": "雪峯示眾云。",
    "T47n1997_017:0793c28_2": "盡大地撮來如粟米粒大。",
    "T47n1997_017:0793c28_3": "拋向面前漆桶不會。",
    "T47n1997_017:0793c29_4": "打鼓普請看。",
    "T47n1997_017:0793c29_5": "師拈云。",
    "T47n1997_017:0793c29_6": "絕天維立地紀。",
    "T47n1997_017:0794a01_7": "未足稱奇。",
    "T47n1997_017:0794a01_8": "擘太華逗河源。",
    "T47n1997_017:0794a01_9": "亦非敏手。",
    "T47n1997_017:0794a02_10": "若向箇裏覷得透。",
    "T47n1997_017:0794a02_11": "便可以撒驪龍窟明珠。",
    "T47n1997_017:0794a03_0": "噴栴檀林香氣。",
    "T47n1997_017:0794a03_1": "豈不快哉。",
    "T47n1997_017:0794a03_2": "山僧今日不避泥水放一線道。",
    "T47n1997_017:0794a04_3": "乃拈拄杖云。",
    "T47n1997_017:0794a04_4": "還見雪峯麼。",
    "T47n1997_017:0794a04_5": "遂卓拄杖云劄。",
    "T47n1997_017:0794a06_0": "舉。",
    "T47n1997_017:0794a06_1": "臨濟與普化。",
    "T47n1997_017:0794a06_2": "一日同往施主家齋。",
    "T47n1997_017:0794a06_3": "濟問。",
    "T47n1997_017:0794a06_4": "毛吞巨海芥納須彌。",
    "T47n1997_017:0794a07_5": "為復是神通妙用。",
    "T47n1997_017:0794a07_6": "為復是法爾如然。",
    "T47n1997_017:0794a08_7": "化踢倒飯床。",
    "T47n1997_017:0794a08_8": "濟云。",
    "T47n1997_017:0794a08_9": "太麁生。",
    "T47n1997_017:0794a08_10": "化云。",
    "T47n1997_017:0794a09_0": "這裏是什麼所在。",
    "T47n1997_017:0794a09_1": "說麁說細。",
    "T47n1997_017:0794a09_2": "濟休去。",
    "T47n1997_017:0794a09_3": "來日又同一施主家齋。",
    "T47n1997_017:0794a10_4": "濟復問。",
    "T47n1997_017:0794a10_5": "今日供養何似昨日。",
    "T47n1997_017:0794a11_0": "化又踢倒飯床。",
    "T47n1997_017:0794a11_1": "濟云。",
    "T47n1997_017:0794a11_2": "太麁生。",
    "T47n1997_017:0794a11_3": "化云。",
    "T47n1997_017:0794a11_4": "瞎漢。",
    "T47n1997_017:0794a11_5": "佛法說甚麁細。",
    "T47n1997_017:0794a12_6": "濟吐舌。",
    "T47n1997_017:0794a12_7": "師拈云。",
    "T47n1997_017:0794a12_8": "精金不百煉。",
    "T47n1997_017:0794a12_9": "爭見光輝。",
    "T47n1997_017:0794a13_10": "至寶不酬價。",
    "T47n1997_017:0794a13_11": "爭辨真假。",
    "T47n1997_017:0794a13_12": "不是臨濟不能驗他普化。",
    "T47n1997_017:0794a14_13": "不是普化不能抗他臨濟。",
    "T47n1997_017:0794a14_14": "所謂如水入水如金博金。",
    "T47n1997_017:0794a15_15": "雖然如是。",
    "T47n1997_017:0794a15_16": "放過則彼此作家。",
    "T47n1997_017:0794a16_17": "點檢則二俱失利。",
    "T47n1997_017:0794a16_18": "具擇法眼者試請辨看。",
    "T47n1997_017:0794a18_0": "舉。",
    "T47n1997_017:0794a18_1": "昔有秀才問長沙。",
    "T47n1997_017:0794a18_2": "某甲曾看千佛名經。",
    "T47n1997_017:0794a18_3": "百千諸佛但見其名。",
    "T47n1997_017:0794a19_4": "未審居何國土。",
    "T47n1997_017:0794a19_5": "長沙召秀才。",
    "T47n1997_017:0794a20_6": "才應諾。",
    "T47n1997_017:0794a20_7": "沙云。",
    "T47n1997_017:0794a20_8": "黃鶴樓崔顥題後。",
    "T47n1997_017:0794a20_9": "秀才還曾題否。",
    "T47n1997_017:0794a21_10": "才云。",
    "T47n1997_017:0794a21_11": "不曾題。",
    "T47n1997_017:0794a21_12": "沙云。",
    "T47n1997_017:0794a21_13": "得閑題取一篇好。",
    "T47n1997_017:0794a22_0": "師拈云。",
    "T47n1997_017:0794a22_1": "驀刀劈面。",
    "T47n1997_017:0794a22_2": "解辨者何人。",
    "T47n1997_017:0794a22_3": "劈箭當胸。",
    "T47n1997_017:0794a22_4": "承當者有幾。",
    "T47n1997_017:0794a23_5": "若能向奔流度刃疾焰過風處。",
    "T47n1997_017:0794a23_6": "見長沙橫身為物去不消一揑。",
    "T47n1997_017:0794a24_7": "其或隨言詮入露布。",
    "T47n1997_017:0794a25_8": "便謂問東答西裂轉話頭。",
    "T47n1997_017:0794a25_9": "且作麼生是長沙端的處。",
    "T47n1997_017:0794a26_10": "還委悉麼。",
    "T47n1997_017:0794a26_11": "殺人刀活人劍。",
    "T47n1997_017:0794a27_0": "舉。",
    "T47n1997_017:0794a27_1": "趙州訪一庵主便云。",
    "T47n1997_017:0794a27_2": "有麼有麼。",
    "T47n1997_017:0794a27_3": "庵主竪起拳頭。",
    "T47n1997_017:0794a28_4": "州云。",
    "T47n1997_017:0794a28_5": "水淺不是泊船處。",
    "T47n1997_017:0794a28_6": "便去。",
    "T47n1997_017:0794a28_7": "又訪一庵主亦云。",
    "T47n1997_017:0794a29_8": "有麼有麼。",
    "T47n1997_017:0794a29_9": "庵主亦竪起拳頭。",
    "T47n1997_017:0794a29_10": "州云。",
    "T47n1997_017:0794b01_11": "能縱能奪能殺能活。",
    "T47n1997_017:0794b01_12": "禮拜而去。",
    "T47n1997_017:0794b01_13": "師拈云。",
    "T47n1997_017:0794b02_0": "佛祖命脈列聖鉗鎚。",
    "T47n1997_017:0794b02_1": "換斗移星經天緯地。",
    "T47n1997_017:0794b02_2": "有般漢未出窠窟。",
    "T47n1997_017:0794b03_3": "只管道。",
    "T47n1997_017:0794b03_4": "舌頭在趙州口裏。",
    "T47n1997_017:0794b03_5": "殊不知。",
    "T47n1997_017:0794b04_6": "自己性命已屬他人。",
    "T47n1997_017:0794b04_7": "若能握向上綱宗。",
    "T47n1997_017:0794b05_0": "與二庵主相見。",
    "T47n1997_017:0794b05_1": "便可以定龍蛇別緇素。",
    "T47n1997_017:0794b05_2": "正好著力。",
    "T47n1997_017:0794b06_3": "還知趙州落處麼。",
    "T47n1997_017:0794b06_4": "切忌顢頇。",
    "T47n1997_017:0794b07_0": "舉。",
    "T47n1997_017:0794b07_1": "僧問長沙。",
    "T47n1997_017:0794b07_2": "作麼生轉得山河大地歸自己去。",
    "T47n1997_017:0794b08_3": "沙云。",
    "T47n1997_017:0794b08_4": "作麼生轉得自己歸山河大地去。",
    "T47n1997_017:0794b08_5": "師拈云。",
    "T47n1997_017:0794b09_6": "得人一牛還人一馬。",
    "T47n1997_017:0794b10_0": "舉。",
    "T47n1997_017:0794b10_1": "雲門示眾云。",
    "T47n1997_017:0794b10_2": "百草頭上道將一句來。",
    "T47n1997_017:0794b10_3": "眾無對。",
    "T47n1997_017:0794b11_4": "自代云俱。",
    "T47n1997_017:0794b11_5": "師拈云。",
    "T47n1997_017:0794b11_6": "直得萬機寢削千眼頓開。",
    "T47n1997_017:0794b12_7": "細如須彌大如芥子。",
    "T47n1997_017:0794b12_8": "軟如鐵硬如泥。",
    "T47n1997_017:0794b12_9": "雖然如是。",
    "T47n1997_017:0794b13_10": "只道得一半。",
    "T47n1997_017:0794b13_11": "或有問山僧。",
    "T47n1997_017:0794b13_12": "只對他道收。",
    "T47n1997_017:0794b14_0": "且道。",
    "T47n1997_017:0794b14_1": "落在什麼處。",
    "T47n1997_017:0794b15_0": "舉。",
    "T47n1997_017:0794b15_1": "興化一日上堂。",
    "T47n1997_017:0794b15_2": "有一同參來纔上法堂。",
    "T47n1997_017:0794b15_3": "化便喝。",
    "T47n1997_017:0794b16_4": "僧亦喝。",
    "T47n1997_017:0794b16_5": "僧纔行三兩步。",
    "T47n1997_017:0794b16_6": "化又喝。",
    "T47n1997_017:0794b16_7": "僧亦喝。",
    "T47n1997_017:0794b17_8": "僧擬進前。",
    "T47n1997_017:0794b17_9": "化拈棒。",
    "T47n1997_017:0794b17_10": "僧又喝。",
    "T47n1997_017:0794b17_11": "化云。",
    "T47n1997_017:0794b17_12": "爾看這瞎漢。",
    "T47n1997_017:0794b18_13": "猶作主宰在。",
    "T47n1997_017:0794b18_14": "僧擬議。",
    "T47n1997_017:0794b18_15": "化便直打下法堂。",
    "T47n1997_017:0794b19_0": "却歸方丈。",
    "T47n1997_017:0794b19_1": "侍者便問。",
    "T47n1997_017:0794b19_2": "適來僧有甚語句觸忤和尚。",
    "T47n1997_017:0794b20_3": "化云。",
    "T47n1997_017:0794b20_4": "他適來也有照也有用。",
    "T47n1997_017:0794b20_5": "也有權也有實。",
    "T47n1997_017:0794b21_6": "我將手向伊面前劃兩遭。",
    "T47n1997_017:0794b21_7": "到這裏便用不得似。",
    "T47n1997_017:0794b22_8": "這般漢不打更待何時。",
    "T47n1997_017:0794b22_9": "師拈云。",
    "T47n1997_017:0794b22_10": "辨王庫刀振塗毒鼓。",
    "T47n1997_017:0794b23_11": "掣電未足以擬其迅。",
    "T47n1997_017:0794b23_12": "震雷未足以方其威。",
    "T47n1997_017:0794b24_13": "可謂善驅耕夫之牛。",
    "T47n1997_017:0794b24_14": "能奪饑人之食。",
    "T47n1997_017:0794b25_15": "只如主賓互換有照有用有權有實則且致。",
    "T47n1997_017:0794b26_16": "甚處是興化將手向伊面前劃兩遭處。",
    "T47n1997_017:0794b27_0": "若這裏洞明。",
    "T47n1997_017:0794b27_1": "可以荷負臨濟正法眼藏。",
    "T47n1997_017:0794b27_2": "如或泥水未分。",
    "T47n1997_017:0794b28_3": "未免瞎驢隨大隊。",
    "T47n1997_017:0794b29_0": "舉。",
    "T47n1997_017:0794b29_1": "仰山坐次。",
    "T47n1997_017:0794b29_2": "大禪佛到翹一足云。",
    "T47n1997_017:0794b29_3": "西天二十八祖亦如是。",
    "T47n1997_017:0794c01_4": "唐土六祖亦如是。",
    "T47n1997_017:0794c01_5": "和尚亦如是。",
    "T47n1997_017:0794c02_0": "某甲亦如是。",
    "T47n1997_017:0794c02_1": "仰山下禪床打四藤條。",
    "T47n1997_017:0794c02_2": "師拈云。",
    "T47n1997_017:0794c03_0": "師資會遇袞芥投針。",
    "T47n1997_017:0794c03_1": "一期借路經過。",
    "T47n1997_017:0794c03_2": "不免互相鈍置。",
    "T47n1997_017:0794c04_3": "雪竇道。",
    "T47n1997_017:0794c04_4": "藤條未到折。",
    "T47n1997_017:0794c04_5": "因甚只打四下。",
    "T47n1997_017:0794c05_0": "師云。",
    "T47n1997_017:0794c05_1": "餬餅討什麼汁。",
    "T47n1997_017:0794c05_2": "雪竇云。",
    "T47n1997_017:0794c05_3": "須是箇斬釘截鐵漢始得。",
    "T47n1997_017:0794c06_4": "師云。",
    "T47n1997_017:0794c06_5": "大似隨邪逐惡。",
    "T47n1997_017:0794c06_6": "大禪佛後到霍山自云。",
    "T47n1997_017:0794c07_7": "集雲峯下四藤條天下大禪佛參。",
    "T47n1997_017:0794c08_0": "霍山云。",
    "T47n1997_017:0794c08_1": "維那打鐘著。",
    "T47n1997_017:0794c08_2": "禪便走。",
    "T47n1997_017:0794c08_3": "師拈云。",
    "T47n1997_017:0794c08_4": "這漢擔仰山一箇冬瓜印子。",
    "T47n1997_017:0794c09_5": "向人前賣弄。",
    "T47n1997_017:0794c09_6": "若不是霍山幾被塗糊。",
    "T47n1997_017:0794c10_7": "雖然可惜令行一半。",
    "T47n1997_017:0794c10_8": "當時不用喚維那。",
    "T47n1997_017:0794c11_9": "好與擒住更打四藤條。",
    "T47n1997_017:0794c11_10": "且聽這漢疑三十年。",
    "T47n1997_017:0794c13_0": "舉。",
    "T47n1997_017:0794c13_1": "雪峯會下有一僧。",
    "T47n1997_017:0794c13_2": "辭去在山中卓庵。",
    "T47n1997_017:0794c13_3": "多時不剃頭。",
    "T47n1997_017:0794c14_4": "自作一柄木杓。",
    "T47n1997_017:0794c14_5": "溪邊舀水喫。",
    "T47n1997_017:0794c14_6": "時有僧見問。",
    "T47n1997_017:0794c15_7": "如何是祖師西來意。",
    "T47n1997_017:0794c15_8": "主竪起杓子云。",
    "T47n1997_017:0794c15_9": "溪深杓柄長。",
    "T47n1997_017:0794c16_10": "僧歸舉似雪峯。",
    "T47n1997_017:0794c16_11": "峯云。",
    "T47n1997_017:0794c16_12": "也甚奇怪。",
    "T47n1997_017:0794c16_13": "峯一日與侍者將剃刀去。",
    "T47n1997_017:0794c17_14": "纔相見便問。",
    "T47n1997_017:0794c17_15": "道得即不剃汝頭。",
    "T47n1997_017:0794c18_16": "主便取水洗頭。",
    "T47n1997_017:0794c18_17": "峯便與伊剃却。",
    "T47n1997_017:0794c18_18": "師拈云。",
    "T47n1997_017:0794c19_19": "庵主雖生鐵鑄就。",
    "T47n1997_017:0794c19_20": "雪峯柰是本分鉗鎚。",
    "T47n1997_017:0794c20_0": "當初若一向顢頇。",
    "T47n1997_017:0794c20_1": "爭見驚天動地。",
    "T47n1997_017:0794c20_2": "還委悉麼。",
    "T47n1997_017:0794c21_0": "金鏃慣調曾百戰。",
    "T47n1997_017:0794c21_1": "鐵鞭多力恨無酬。",
    "T47n1997_017:0794c22_0": "舉。",
    "T47n1997_017:0794c22_1": "僧問保福。",
    "T47n1997_017:0794c22_2": "雪峯平生有何言句。",
    "T47n1997_017:0794c22_3": "得似羚羊掛角時。",
    "T47n1997_017:0794c23_4": "福云。",
    "T47n1997_017:0794c23_5": "我不可作雪峯弟子不得那。",
    "T47n1997_017:0794c23_6": "師拈云。",
    "T47n1997_017:0794c24_7": "翡翠羽毛麒麟頭角。",
    "T47n1997_017:0794c24_8": "重重光彩的的相承。",
    "T47n1997_017:0794c25_9": "要明陷虎之機。",
    "T47n1997_017:0794c25_10": "須施嶮崖之句。",
    "T47n1997_017:0794c25_11": "雖然如是。",
    "T47n1997_017:0794c26_0": "只知與麼來。",
    "T47n1997_017:0794c26_1": "不知與麼去。",
    "T47n1997_017:0794c26_2": "或有問山僧。",
    "T47n1997_017:0794c26_3": "五祖平生有何言句。",
    "T47n1997_017:0794c27_4": "得似羚羊掛角時。",
    "T47n1997_017:0794c27_5": "只對道。",
    "T47n1997_017:0794c27_6": "不敢孤負先師。",
    "T47n1997_017:0794c28_7": "委悉麼。",
    "T47n1997_017:0794c28_8": "山高豈礙白雲飛。",
    "T47n1997_017:0794c29_0": "舉。",
    "T47n1997_017:0794c29_1": "玄沙和尚到莆田縣。",
    "T47n1997_017:0794c29_2": "眾以百戲迎之。",
    "T47n1997_017:0794c29_3": "次日玄沙遂問小塘長老。",
    "T47n1997_017:0795a01_4": "昨日許多喧鬧。",
    "T47n1997_017:0795a01_5": "向什麼處去。",
    "T47n1997_017:0795a02_6": "小塘提起袈裟角示之。",
    "T47n1997_017:0795a02_7": "沙云。",
    "T47n1997_017:0795a02_8": "料掉沒交涉。",
    "T47n1997_017:0795a03_9": "大溈真如拈云。",
    "T47n1997_017:0795a03_10": "大溈即不然。",
    "T47n1997_017:0795a03_11": "或有問昨日許多喧鬧向什麼處去。",
    "T47n1997_017:0795a04_12": "遂鳴指一下。",
    "T47n1997_017:0795a04_13": "或有箇衲僧出云。",
    "T47n1997_017:0795a05_14": "料掉沒交涉。",
    "T47n1997_017:0795a05_15": "大溈却肯伊。",
    "T47n1997_017:0795a05_16": "何故。",
    "T47n1997_017:0795a05_17": "大丈夫漢捋虎鬚也是本分。",
    "T47n1997_017:0795a06_18": "且道。",
    "T47n1997_017:0795a06_19": "利害在什麼處。",
    "T47n1997_017:0795a07_20": "師拈云。",
    "T47n1997_017:0795a07_21": "二老宿雖是提振綱宗。",
    "T47n1997_017:0795a07_22": "要且貪觀天上月。",
    "T47n1997_017:0795a08_23": "而今或有箇出問道林。",
    "T47n1997_017:0795a08_24": "適來許多喧鬧向什麼處去。",
    "T47n1997_017:0795a09_25": "只對他道。",
    "T47n1997_017:0795a09_26": "又是從頭起。",
    "T47n1997_017:0795a09_27": "他若道料掉沒交涉。",
    "T47n1997_017:0795a10_28": "劈脊便棒。",
    "T47n1997_017:0795a10_29": "何故。",
    "T47n1997_017:0795a10_30": "曹溪波浪如相似。",
    "T47n1997_017:0795a11_31": "無限平人被陸沈。",
    "T47n1997_017:0795a12_0": "舉。",
    "T47n1997_017:0795a12_1": "僧問投子。",
    "T47n1997_017:0795a12_2": "如何是一大事因緣。",
    "T47n1997_017:0795a12_3": "子云。",
    "T47n1997_017:0795a12_4": "尹司空與老僧開堂。",
    "T47n1997_017:0795a13_5": "師拈云。",
    "T47n1997_017:0795a13_6": "人道投子實頭。",
    "T47n1997_017:0795a13_7": "不妨忒殺淳朴。",
    "T47n1997_017:0795a14_8": "若是山僧即不然。",
    "T47n1997_017:0795a14_9": "或有問。",
    "T47n1997_017:0795a14_10": "如何是一大事因緣。",
    "T47n1997_017:0795a15_11": "只對他道。",
    "T47n1997_017:0795a15_12": "弄潮須是弄潮人。",
    "T47n1997_017:0795a16_0": "舉。",
    "T47n1997_017:0795a16_1": "藥山一夜無燈燭。",
    "T47n1997_017:0795a16_2": "示眾云。",
    "T47n1997_017:0795a16_3": "我有一句子。",
    "T47n1997_017:0795a16_4": "待犢牛生兒即向汝道。",
    "T47n1997_017:0795a17_5": "時有僧出云。",
    "T47n1997_017:0795a17_6": "犢牛生兒也。",
    "T47n1997_017:0795a18_7": "自是和尚不道。",
    "T47n1997_017:0795a18_8": "山云。",
    "T47n1997_017:0795a18_9": "把燈來。",
    "T47n1997_017:0795a18_10": "其僧便歸眾。",
    "T47n1997_017:0795a19_11": "洞山云。",
    "T47n1997_017:0795a19_12": "這僧會則會。",
    "T47n1997_017:0795a19_13": "只是不肯禮拜。",
    "T47n1997_017:0795a19_14": "法燈云。",
    "T47n1997_017:0795a20_15": "當時不要索燈。",
    "T47n1997_017:0795a20_16": "但問他道。",
    "T47n1997_017:0795a20_17": "生底是特牛兒牸牛兒。",
    "T47n1997_017:0795a21_18": "又代云。",
    "T47n1997_017:0795a21_19": "雙生也。",
    "T47n1997_017:0795a21_20": "師拈云。",
    "T47n1997_017:0795a21_21": "藥山垂釣意在鯤鯨。",
    "T47n1997_017:0795a22_22": "這僧吞釣三千浪激。",
    "T47n1997_017:0795a22_23": "洞山眼正千里同風。",
    "T47n1997_017:0795a23_24": "法燈重整鎗旗。",
    "T47n1997_017:0795a23_25": "再裝甲冑。",
    "T47n1997_017:0795a23_26": "雖然如是。",
    "T47n1997_017:0795a23_27": "山僧即不然。",
    "T47n1997_017:0795a24_28": "夾山有一句子。",
    "T47n1997_017:0795a24_29": "威音王已前與諸人道了也。",
    "T47n1997_017:0795a25_30": "或有問明頭合暗頭合。",
    "T47n1997_017:0795a25_31": "只對他道。",
    "T47n1997_017:0795a26_0": "龍得水時添意氣。",
    "T47n1997_017:0795a26_1": "虎逢山勢長威獰。",
    "T47n1997_017:0795a27_0": "舉。",
    "T47n1997_017:0795a27_1": "巖頭參德山。",
    "T47n1997_017:0795a27_2": "入門便問。",
    "T47n1997_017:0795a27_3": "是凡是聖。",
    "T47n1997_017:0795a27_4": "山便喝。",
    "T47n1997_017:0795a28_5": "頭禮拜。",
    "T47n1997_017:0795a28_6": "洞山云。",
    "T47n1997_017:0795a28_7": "若不是奯公。",
    "T47n1997_017:0795a28_8": "大難承當。",
    "T47n1997_017:0795a29_0": "巖頭聞云。",
    "T47n1997_017:0795a29_1": "洞山老漢不識好惡。",
    "T47n1997_017:0795a29_2": "錯下名言。",
    "T47n1997_017:0795a29_3": "殊不知。",
    "T47n1997_017:0795b01_4": "我當時一手擡一手搦。",
    "T47n1997_017:0795b01_5": "師拈云。",
    "T47n1997_017:0795b01_6": "德山據令而行。",
    "T47n1997_017:0795b02_7": "只得一半。",
    "T47n1997_017:0795b02_8": "洞山通方有眼。",
    "T47n1997_017:0795b02_9": "千里同風。",
    "T47n1997_017:0795b03_0": "巖頭既善據虎頭。",
    "T47n1997_017:0795b03_1": "又能收虎尾。",
    "T47n1997_017:0795b03_2": "大似作家戰將臨陣扣敵。",
    "T47n1997_017:0795b04_3": "七事俱全不妨奇特。",
    "T47n1997_017:0795b04_4": "敢問。",
    "T47n1997_017:0795b04_5": "那箇是一手擡一手搦處。",
    "T47n1997_017:0795b05_6": "謂言侵早起。",
    "T47n1997_017:0795b05_7": "更有夜行人。",
    "T47n1997_017:0795b07_0": "舉。",
    "T47n1997_017:0795b07_1": "僧問曹山。",
    "T47n1997_017:0795b07_2": "恁麼熱向什麼處回避。",
    "T47n1997_017:0795b07_3": "山云。",
    "T47n1997_017:0795b07_4": "鑊湯爐炭裏回避。",
    "T47n1997_017:0795b08_5": "僧云。",
    "T47n1997_017:0795b08_6": "鑊湯爐炭裏作麼生回避。",
    "T47n1997_017:0795b09_7": "山云。",
    "T47n1997_017:0795b09_8": "眾苦不能到。",
    "T47n1997_017:0795b09_9": "師拈云。",
    "T47n1997_017:0795b09_10": "回機轉位宛爾通方。",
    "T47n1997_017:0795b10_11": "直下似臘月蓮華。",
    "T47n1997_017:0795b10_12": "雖然如是。",
    "T47n1997_017:0795b10_13": "斬釘截鐵更饒一路。",
    "T47n1997_017:0795b11_14": "或有問碧巖。",
    "T47n1997_017:0795b11_15": "恁麼熱向什麼處回避。",
    "T47n1997_017:0795b12_16": "只向他道。",
    "T47n1997_017:0795b12_17": "鑊湯爐炭裏回避。",
    "T47n1997_017:0795b12_18": "他若云鑊湯爐炭裏如何回避。",
    "T47n1997_017:0795b13_19": "只向他道。",
    "T47n1997_017:0795b13_20": "熱殺也何妨。",
    "T47n1997_017:0795b13_21": "且道。",
    "T47n1997_017:0795b14_22": "還有為人處也無。",
    "T47n1997_017:0795b15_0": "舉。",
    "T47n1997_017:0795b15_1": "陸亘大夫問南泉。",
    "T47n1997_017:0795b15_2": "肇法師道。",
    "T47n1997_017:0795b15_3": "天地與我同根。",
    "T47n1997_017:0795b16_4": "萬物與我一體。",
    "T47n1997_017:0795b16_5": "也甚奇怪。",
    "T47n1997_017:0795b16_6": "南泉指庭前華召大夫云。",
    "T47n1997_017:0795b17_7": "時人見此一株華如夢相似。",
    "T47n1997_017:0795b17_8": "師拈云。",
    "T47n1997_017:0795b18_9": "陸亘手攀金鎖。",
    "T47n1997_017:0795b18_10": "南泉八字打開。",
    "T47n1997_017:0795b18_11": "直得七珍八寶羅列目前。",
    "T47n1997_017:0795b19_12": "乃竪起拂子云。",
    "T47n1997_017:0795b19_13": "天地一指萬物一馬。",
    "T47n1997_017:0795b20_14": "通身是眼分疎不下。",
    "T47n1997_017:0795b21_0": "舉。",
    "T47n1997_017:0795b21_1": "興化示眾云。",
    "T47n1997_017:0795b21_2": "今日不用如之若何。",
    "T47n1997_017:0795b21_3": "便請單刀直入。",
    "T47n1997_017:0795b22_4": "興化與爾證明。",
    "T47n1997_017:0795b22_5": "時有旻德長老。",
    "T47n1997_017:0795b22_6": "出眾禮拜起便喝。",
    "T47n1997_017:0795b23_7": "化亦喝。",
    "T47n1997_017:0795b23_8": "德又喝。",
    "T47n1997_017:0795b23_9": "化亦喝。",
    "T47n1997_017:0795b23_10": "德便禮拜。",
    "T47n1997_017:0795b24_11": "化云。",
    "T47n1997_017:0795b24_12": "旻德今日却校興化二十棒。",
    "T47n1997_017:0795b24_13": "若是別人一棒也少不得。",
    "T47n1997_017:0795b25_14": "何故。",
    "T47n1997_017:0795b25_15": "蓋為他旻德會一喝不作一喝用。",
    "T47n1997_017:0795b26_16": "師拈云。",
    "T47n1997_017:0795b26_17": "作家相見須是恁麼。",
    "T47n1997_017:0795b26_18": "機如掣電眼似流星。",
    "T47n1997_017:0795b27_19": "原始要終扶頭接尾。",
    "T47n1997_017:0795b27_20": "所謂羽毛相似言氣相合。",
    "T47n1997_017:0795b28_21": "只如兩家互換相喝。",
    "T47n1997_017:0795b28_22": "且作麼生辨得。",
    "T47n1997_017:0795b29_23": "一喝不作一喝用。",
    "T47n1997_017:0795b29_24": "要承當臨濟正法眼藏。",
    "T47n1997_017:0795c01_25": "須明取二老宿意。",
    "T47n1997_017:0795c01_26": "且道。",
    "T47n1997_017:0795c01_27": "意作麼生。",
    "T47n1997_017:0795c02_0": "百尺竿頭須進步。",
    "T47n1997_017:0795c02_1": "紫羅帳裏撒真珠。",
    "T47n1997_017:0795c03_0": "舉。",
    "T47n1997_017:0795c03_1": "僧問雲門。",
    "T47n1997_017:0795c03_2": "如何是清淨法身。",
    "T47n1997_017:0795c03_3": "門云。",
    "T47n1997_017:0795c03_4": "六不收。",
    "T47n1997_017:0795c04_5": "師拈云。",
    "T47n1997_017:0795c04_6": "只道得一半。",
    "T47n1997_017:0795c04_7": "若問道林。",
    "T47n1997_017:0795c04_8": "只對他道。",
    "T47n1997_017:0795c05_9": "一不立。",
    "T47n1997_017:0795c05_10": "遂成頌。",
    "T47n1997_017:0795c05_11": "一不立六不收。",
    "T47n1997_017:0795c05_12": "突然那更有蹤由。",
    "T47n1997_017:0795c06_13": "無限青山留不住。",
    "T47n1997_017:0795c06_14": "落華流水太悠悠。",
    "T47n1997_017:0795c08_0": "舉。",
    "T47n1997_017:0795c08_1": "僧問長慶。",
    "T47n1997_017:0795c08_2": "如何是合聖之言。",
    "T47n1997_017:0795c08_3": "長慶云。",
    "T47n1997_017:0795c08_4": "山僧被闍梨一問。",
    "T47n1997_017:0795c09_5": "直得口似匾檐。",
    "T47n1997_017:0795c09_6": "師拈云。",
    "T47n1997_017:0795c09_7": "是則是。",
    "T47n1997_017:0795c10_0": "應機無差。",
    "T47n1997_017:0795c10_1": "爭奈大驚小怪。",
    "T47n1997_017:0795c10_2": "或有問道林。",
    "T47n1997_017:0795c10_3": "如何是合聖之言。",
    "T47n1997_017:0795c11_4": "只對他道。",
    "T47n1997_017:0795c11_5": "誌公不是閑和尚。",
    "T47n1997_017:0795c11_6": "剪刀只在臥床頭。",
    "T47n1997_017:0795c13_0": "舉。",
    "T47n1997_017:0795c13_1": "臨濟道。",
    "T47n1997_017:0795c13_2": "一喝分賓主。",
    "T47n1997_017:0795c13_3": "照用一時行。",
    "T47n1997_017:0795c13_4": "師喝一喝云。",
    "T47n1997_017:0795c14_5": "且道。",
    "T47n1997_017:0795c14_6": "是賓是主。",
    "T47n1997_017:0795c14_7": "是照是用。",
    "T47n1997_017:0795c14_8": "還委悉麼。",
    "T47n1997_017:0795c15_0": "千峯勢到嶽邊止。",
    "T47n1997_017:0795c15_1": "萬派聲歸海上消。",
    "T47n1997_017:0795c16_0": "舉。",
    "T47n1997_017:0795c16_1": "玄沙見鼓山來作一圓相。",
    "T47n1997_017:0795c16_2": "山云。",
    "T47n1997_017:0795c16_3": "人人出這箇不得。",
    "T47n1997_017:0795c17_4": "沙云。",
    "T47n1997_017:0795c17_5": "情知汝向驢胎馬腹裏作活計。",
    "T47n1997_017:0795c18_0": "山云。",
    "T47n1997_017:0795c18_1": "和尚又作麼生。",
    "T47n1997_017:0795c18_2": "沙云。",
    "T47n1997_017:0795c18_3": "人人出這箇不得。",
    "T47n1997_017:0795c19_0": "山云。",
    "T47n1997_017:0795c19_1": "和尚與麼道得。",
    "T47n1997_017:0795c19_2": "某甲却與麼道不得。",
    "T47n1997_017:0795c19_3": "沙云。",
    "T47n1997_017:0795c20_4": "我得汝不得。",
    "T47n1997_017:0795c20_5": "師拈云。",
    "T47n1997_017:0795c20_6": "酌然這一條路。",
    "T47n1997_017:0795c20_7": "作者方知。",
    "T47n1997_017:0795c21_8": "直得窮天地亘萬古而不移。",
    "T47n1997_017:0795c21_9": "消劫石空芥城而不盡。",
    "T47n1997_017:0795c22_10": "便是透關底也。",
    "T47n1997_017:0795c22_11": "須急著眼始得。",
    "T47n1997_017:0795c23_0": "一等是與麼時節。",
    "T47n1997_017:0795c23_1": "為什麼我得汝不得。",
    "T47n1997_017:0795c23_2": "切忌向驢胎馬腹裏作活計。",
    "T47n1997_017:0795c25_0": "舉。",
    "T47n1997_017:0795c25_1": "休靜在洞山作維那。",
    "T47n1997_017:0795c25_2": "一日普請白槌云。",
    "T47n1997_017:0795c25_3": "上間鋤地下間搬柴。",
    "T47n1997_017:0795c26_4": "首座遂問云。",
    "T47n1997_017:0795c26_5": "聖僧作箇什麼。",
    "T47n1997_017:0795c27_6": "靜云。",
    "T47n1997_017:0795c27_7": "當堂不正坐。",
    "T47n1997_017:0795c27_8": "那赴兩頭機。",
    "T47n1997_017:0795c27_9": "師拈云。",
    "T47n1997_017:0795c28_0": "珠鑽九曲。",
    "T47n1997_017:0795c28_1": "休靜可謂神功。",
    "T47n1997_017:0795c28_2": "玉解連環。",
    "T47n1997_017:0795c28_3": "山僧更資一路。",
    "T47n1997_017:0795c29_4": "或有問聖僧作箇什麼。",
    "T47n1997_017:0795c29_5": "只對他道。",
    "T47n1997_017:0795c29_6": "廓如明鏡當堂照。",
    "T47n1997_017:0796a01_7": "不動形聲應萬緣。",
    "T47n1997_017:0796a02_0": "圓悟佛果禪師語錄卷第十七"
}