[
    {
        "source_sentence": "佛說鬼問目連經",
        "from": "T17n0734_001:0535b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後漢安息國三藏安世高譯",
        "from": "T17n0734_001:0535b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞如是：一時佛住王舍城迦蘭陀竹園。爾時",
        "from": "T17n0734_001:0535b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目連晡時從禪定起，遊恒水邊，見諸餓鬼受罪不同。",
        "from": "T17n0734_001:0535b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸餓鬼見尊者目連，皆起敬心，來問因緣。",
        "from": "T17n0734_001:0535b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一鬼問言：",
        "from": "T17n0734_001:0535b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生以來，恒患頭痛。",
        "from": "T17n0734_001:0535b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，好以杖打眾生頭。",
        "from": "T17n0734_001:0535b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0535b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，資財無量而樂著弊衣。",
        "from": "T17n0734_001:0535b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，布施作福，還復悔惜。",
        "from": "T17n0734_001:0535b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果在地獄。",
        "from": "T17n0734_001:0535b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，宿無常處，恒倚巷陌。",
        "from": "T17n0734_001:0535b24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，客來投止，不肯安處；",
        "from": "T17n0734_001:0535b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見他客止，方復瞋恚。",
        "from": "T17n0734_001:0535b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0535b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我食不噉一斛而不得飽。",
        "from": "T17n0734_001:0535b28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，飯飼眾生，初不令足。",
        "from": "T17n0734_001:0535c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0535c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，腹大如甕，咽細如針孔，不得下食。",
        "from": "T17n0734_001:0535c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作聚落主，自恃豪強，輕欺百姓，強打拍人，索好美食。",
        "from": "T17n0734_001:0535c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0535c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，恒患男根瘡爛，痛不可言。",
        "from": "T17n0734_001:0535c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，佛圖精舍清淨之處，行於婬欲。",
        "from": "T17n0734_001:0535c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0535c08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來多有兒子，皆端正可喜而皆早死。",
        "from": "T17n0734_001:0535c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念之斷絕，痛不可言。",
        "from": "T17n0734_001:0535c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，見兒殺生，助喜噉肉；",
        "from": "T17n0734_001:0535c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生故短命，喜故痛毒。",
        "from": "T17n0734_001:0535c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0535c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，有一狗體大牙利，兩目赫赤，常來噉我。",
        "from": "T17n0734_001:0535c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，喜將狗獵，殘害眾生，無有慈心。",
        "from": "T17n0734_001:0535c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果在地獄。",
        "from": "T17n0734_001:0535c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，有一人持諸利刀，常割我肉，盡便持去，須臾尋生而復來割，痛不可言。",
        "from": "T17n0734_001:0535c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，喜屠割眾生，初無慈心。",
        "from": "T17n0734_001:0535c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0535c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，恒患身體，處處皆痛，不可得忍。",
        "from": "T17n0734_001:0535c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，好漁獵，所網得魚投之沙土，令其苦死。",
        "from": "T17n0734_001:0535c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0535c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，頑無所知。",
        "from": "T17n0734_001:0535c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0535c26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0535c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，強勸人酒，令其顛倒。",
        "from": "T17n0734_001:0535c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0535c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0535c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，恒患熱渴，行見恒河，冀入其中以除熱渴。",
        "from": "T17n0734_001:0536a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方入其中，身體焦爛，肌肉離骨；",
        "from": "T17n0734_001:0536a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴欲飲之一口入腹，五藏焦爛，痛不可言。",
        "from": "T17n0734_001:0536a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0536a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0536a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，喜焚燒山澤，殘害眾生。",
        "from": "T17n0734_001:0536a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受花報，果入地獄。",
        "from": "T17n0734_001:0536a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0536a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，恒患飢渴，欲至廁上取糞噉之。",
        "from": "T17n0734_001:0536a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廁上有大力鬼，以杖打我，初不能得近。",
        "from": "T17n0734_001:0536a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0536a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0536a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作佛圖主。",
        "from": "T17n0734_001:0536a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有客比丘來，慳惜不與食。",
        "from": "T17n0734_001:0536a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "待客去後，乃行與舊僧。",
        "from": "T17n0734_001:0536a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慳惜僧物故，今受花報，果入地獄。",
        "from": "T17n0734_001:0536a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0536a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，恒處不淨，臭惱纏身，不能得離；",
        "from": "T17n0734_001:0536a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢渴之時，還食此不淨。",
        "from": "T17n0734_001:0536a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0536a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0536a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作婆羅門子。",
        "from": "T17n0734_001:0536a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一道人，中後來就汝乞食。",
        "from": "T17n0734_001:0536a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝爾時當作是方便，令此道人不復來乞，便取其鉢，盛糞著底，以飯覆之。",
        "from": "T17n0734_001:0536a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人得鉢，還至本處，著一面澡漱既訖，攝鉢欲食，鉢中臭穢不可得近。",
        "from": "T17n0734_001:0536a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是之故，墮在地獄，汝將來世墮糞屎彌犁地獄中。",
        "from": "T17n0734_001:0536a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0536a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，肩上有銅瓶，盛滿中洋銅。",
        "from": "T17n0734_001:0536a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一手捉銅杓以取之，還灌其頭，痛不可言。",
        "from": "T17n0734_001:0536a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0536a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0536a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作僧維那知僧事。",
        "from": "T17n0734_001:0536a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一瓶酥藏著餘處，不行與僧，待客去後，乃行與舊僧。",
        "from": "T17n0734_001:0536a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此酥是招提僧物，一切有分。",
        "from": "T17n0734_001:0536a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慳惜僧物故，今受花報，果入地獄。",
        "from": "T17n0734_001:0536a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0536a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生已來，或登刀山、劍樹地獄，或墮火坑、鑊湯地獄，種種受苦，無復休已。",
        "from": "T17n0734_001:0536a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0536a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0536a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作天祠主，烹殺三牲，祭祀天神，血肉灌灑四方，語眾人言：",
        "from": "T17n0734_001:0536b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝等祠祀，大得吉利！",
        "from": "T17n0734_001:0536b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』作此魔邪之言、妖㜸之語，輕欺百姓，誑惑父母。",
        "from": "T17n0734_001:0536b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是之故，果入地獄。",
        "from": "T17n0734_001:0536b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0734_001:0536b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我一生以來，常吞鐵丸。",
        "from": "T17n0734_001:0536b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0734_001:0536b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0734_001:0536b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作沙彌子，取淨水作石蜜漿。",
        "from": "T17n0734_001:0536b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石蜜堅大，盜打取少許；",
        "from": "T17n0734_001:0536b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾僧未食，盜食一口故。",
        "from": "T17n0734_001:0536b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣，果入地獄，汝將來世常吞鐵丸。",
        "from": "T17n0734_001:0536b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時目連與諸餓鬼說往昔因緣經竟，還來在耆闍崛山。",
        "from": "T17n0734_001:0536b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大會，聞佛所說，稽首奉行。",
        "from": "T17n0734_001:0536b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說鬼問目連經",
        "from": "T17n0734_001:0536b11_100",
        "context_with_next_sentence": false
    }
]