{
    "X72n1435_017:0298c08_0": "無異禪師廣錄卷第十七",
    "X72n1435_017:0298c10_0": "住博山法孫　弘瀚　彚編",
    "X72n1435_017:0298c11_0": "首座法孫　弘裕　同集",
    "X72n1435_017:0298c12_0": "　　開示偈(三)",
    "X72n1435_017:0298c13_0": "示汪省菴居士",
    "X72n1435_017:0298c14_0": "叚心地主汪居士。",
    "X72n1435_017:0298c14_1": "今日相逢有甚奇。",
    "X72n1435_017:0298c14_2": "解道聖凡同一體。",
    "X72n1435_017:0298c15_3": "夙緣密行少人知。",
    "X72n1435_017:0298c15_4": "疑情隱隱天機現。",
    "X72n1435_017:0298c15_5": "華藏光明祇一線。",
    "X72n1435_017:0298c16_6": "洞徹曹源滴水時。",
    "X72n1435_017:0298c16_7": "夜叉心即菩薩面。",
    "X72n1435_017:0298c16_8": "早知父母未生前。",
    "X72n1435_017:0298c17_9": "不妨痛處更加鞭。",
    "X72n1435_017:0298c17_10": "山頭雲霧都收盡。",
    "X72n1435_017:0298c17_11": "濁水澄清月正圓。",
    "X72n1435_017:0298c18_12": "月圓不許將心會。",
    "X72n1435_017:0298c18_13": "寶墖無形入也未。",
    "X72n1435_017:0298c18_14": "六窗虗靜絕纖塵。",
    "X72n1435_017:0298c19_15": "兒女團圞非分外。",
    "X72n1435_017:0298c20_0": "示黃心鏡居士",
    "X72n1435_017:0298c21_0": "從來大隱隱廛市。",
    "X72n1435_017:0298c21_1": "居士今朝身便是。",
    "X72n1435_017:0298c21_2": "塵勞堆裏發靈苗。",
    "X72n1435_017:0298c22_3": "真俗何嘗有二致。",
    "X72n1435_017:0298c22_4": "高原陸地不生蓮。",
    "X72n1435_017:0298c22_5": "沙水淤泥花始鮮。",
    "X72n1435_017:0298c23_6": "選官選佛憑君選。",
    "X72n1435_017:0298c23_7": "佛法何妨兒女邊。",
    "X72n1435_017:0298c23_8": "翻思昔日維摩士。",
    "X72n1435_017:0298c24_9": "毗奈耶城弘大智。",
    "X72n1435_017:0298c24_10": "推倒文殊不二門。",
    "X72n1435_017:0298c24_11": "笑携竿木恣遊戲。",
    "X72n1435_017:0299a01_12": "誰云恩愛障修行。",
    "X72n1435_017:0299a01_13": "無生原不礙生生。",
    "X72n1435_017:0299a01_14": "但知生理元無性。",
    "X72n1435_017:0299a02_15": "何慮菩提道不成。",
    "X72n1435_017:0299a02_16": "分明今日老龐家。",
    "X72n1435_017:0299a02_17": "山海敲氷來煑茶。",
    "X72n1435_017:0299a03_18": "撒手那邊千聖外。",
    "X72n1435_017:0299a03_19": "須彌頂上浪生花。",
    "X72n1435_017:0299a04_0": "世間恩愛妄疎親。",
    "X72n1435_017:0299a04_1": "白日青天鬼繫人。",
    "X72n1435_017:0299a04_2": "看破傀儡棚上索。",
    "X72n1435_017:0299a05_3": "莫教辜負好時辰。",
    "X72n1435_017:0299a05_4": "銀山鐵壁丈夫志。",
    "X72n1435_017:0299a05_5": "明月清風道者心。",
    "X72n1435_017:0299a06_6": "世界從他滄海變。",
    "X72n1435_017:0299a06_7": "佛聲終不愧東林。",
    "X72n1435_017:0299a07_0": "送盛翀吾居士",
    "X72n1435_017:0299a08_0": "曾自吳山越水來。",
    "X72n1435_017:0299a08_1": "而今復過姑蘇臺。",
    "X72n1435_017:0299a08_2": "故鄉景色堪徘徊。",
    "X72n1435_017:0299a09_3": "幻化場中隻眼開。",
    "X72n1435_017:0299a09_4": "木蘭亭下人如電。",
    "X72n1435_017:0299a09_5": "縹緲霓裳今罕見。",
    "X72n1435_017:0299a10_6": "海湧峯頭虎亦潛。",
    "X72n1435_017:0299a10_7": "北畆南阡經幾變。",
    "X72n1435_017:0299a10_8": "此身即是真法聚。",
    "X72n1435_017:0299a11_9": "莫逐根塵生怖懼。",
    "X72n1435_017:0299a11_10": "木人花鳥本無情。",
    "X72n1435_017:0299a11_11": "宦途榮顯閒家具。",
    "X72n1435_017:0299a12_12": "我將此語餞君行。",
    "X72n1435_017:0299a12_13": "越水吳山一掌平。",
    "X72n1435_017:0299a12_14": "更有太湖流不輟。",
    "X72n1435_017:0299a13_15": "待將清湛濯塵纓。",
    "X72n1435_017:0299a14_0": "示本宗禪人",
    "X72n1435_017:0299a15_0": "如何是本古路崚。",
    "X72n1435_017:0299a15_1": "嶒蹋得穩。",
    "X72n1435_017:0299a15_2": "如何是宗澄江水。",
    "X72n1435_017:0299a15_3": "底日頭紅。",
    "X72n1435_017:0299a16_4": "麻三斤與乾屎橛。",
    "X72n1435_017:0299a16_5": "蹭蹬如吞栗棘蓬。",
    "X72n1435_017:0299a16_6": "識得此心無二法。",
    "X72n1435_017:0299a17_7": "動容不待眉毛眨。",
    "X72n1435_017:0299a17_8": "破爛袈裟撩亂遮。",
    "X72n1435_017:0299a17_9": "崢嶸蹄角恣騰蹋。",
    "X72n1435_017:0299a18_10": "不學諸方五味禪。",
    "X72n1435_017:0299a18_11": "清風過耳自悠然。",
    "X72n1435_017:0299a18_12": "聖凡家業都拋却。",
    "X72n1435_017:0299a19_13": "撒手徉徜笑掣顛。",
    "X72n1435_017:0299a19_14": "旋身不蹋無明草。",
    "X72n1435_017:0299a19_15": "佛法塵緣都潦倒。",
    "X72n1435_017:0299a20_16": "本源靈湛絕週遮。",
    "X72n1435_017:0299a20_17": "海底珊瑚和日皎。",
    "X72n1435_017:0299a21_0": "示林野禪人",
    "X72n1435_017:0299a22_0": "真修行辦己事。",
    "X72n1435_017:0299a22_1": "願與釋迦為嫡子。",
    "X72n1435_017:0299a22_2": "逈脫塵勞大丈夫。",
    "X72n1435_017:0299a23_0": "好將名字標僧史。",
    "X72n1435_017:0299a23_1": "住深山棲巖谷。",
    "X72n1435_017:0299a23_2": "那管春花秋草綠。",
    "X72n1435_017:0299a24_0": "一箇閒人天地間。",
    "X72n1435_017:0299a24_1": "饑寒飽煖隨緣足。",
    "X72n1435_017:0299a24_2": "鋤為枕草為氈。",
    "X72n1435_017:0299b01_0": "睡眼摩挲白晝眠。",
    "X72n1435_017:0299b01_1": "西來大意山頭有。",
    "X72n1435_017:0299b01_2": "何必臨機更竪拳。",
    "X72n1435_017:0299b02_3": "不勞心枉費力。",
    "X72n1435_017:0299b02_4": "華藏莊嚴在咫尺。",
    "X72n1435_017:0299b02_5": "大千沙界絕遮攔。",
    "X72n1435_017:0299b03_6": "煩惱無明都解釋。",
    "X72n1435_017:0299b03_7": "不動步是真修。",
    "X72n1435_017:0299b03_8": "體露金風得自由。",
    "X72n1435_017:0299b04_9": "看破世間顛倒事。",
    "X72n1435_017:0299b04_10": "青林深處一聲鳩。",
    "X72n1435_017:0299b05_0": "示白齋禪人",
    "X72n1435_017:0299b06_0": "為僧難為僧難。",
    "X72n1435_017:0299b06_1": "喫盡人間苦與酸。",
    "X72n1435_017:0299b06_2": "是非憎愛風穿耳。",
    "X72n1435_017:0299b07_0": "度量還同海樣寬。",
    "X72n1435_017:0299b07_1": "華藏界謾盤桓。",
    "X72n1435_017:0299b07_2": "無邊剎海一毫端。",
    "X72n1435_017:0299b08_0": "覷破緣生無實性。",
    "X72n1435_017:0299b08_1": "了知生死不相干。",
    "X72n1435_017:0299b08_2": "心外境亦何繁。",
    "X72n1435_017:0299b09_0": "流水青山鎮日看。",
    "X72n1435_017:0299b09_1": "三十年來知是錯。",
    "X72n1435_017:0299b09_2": "分明月照髑髏寒。",
    "X72n1435_017:0299b10_3": "覓不得始心安。",
    "X72n1435_017:0299b10_4": "徹底無根見肺肝。",
    "X72n1435_017:0299b10_5": "祖佛相傳祕密旨。",
    "X72n1435_017:0299b11_6": "大似將空挪作丸。",
    "X72n1435_017:0299b11_7": "直教生鐵流金汁。",
    "X72n1435_017:0299b11_8": "湧沸都來掌上觀。",
    "X72n1435_017:0299b12_9": "會得者些關棙子。",
    "X72n1435_017:0299b12_10": "不妨隨處種旃檀。",
    "X72n1435_017:0299b13_0": "示碧輝禪人",
    "X72n1435_017:0299b14_0": "為僧易。",
    "X72n1435_017:0299b14_1": "為僧易。",
    "X72n1435_017:0299b14_2": "要在男兒有大智。",
    "X72n1435_017:0299b14_3": "雪山真寶囊衣中。",
    "X72n1435_017:0299b15_0": "烈燄何須更迴避。",
    "X72n1435_017:0299b15_1": "任毀謗從罵詈。",
    "X72n1435_017:0299b15_2": "恩愛冤家都遠離。",
    "X72n1435_017:0299b16_0": "孤標獨立絕親疎。",
    "X72n1435_017:0299b16_1": "濁惡世間恣翫戲。",
    "X72n1435_017:0299b16_2": "逢人化敷妙義。",
    "X72n1435_017:0299b17_0": "譬如大鵬輕展翅。",
    "X72n1435_017:0299b17_1": "又如鉛汞與真金。",
    "X72n1435_017:0299b17_2": "入火始能辯真偽。",
    "X72n1435_017:0299b18_3": "不求師不斷臂。",
    "X72n1435_017:0299b18_4": "不圖名兮不愛利。",
    "X72n1435_017:0299b18_5": "了無一物挂心懷。",
    "X72n1435_017:0299b19_6": "饑來喫飯困打睡。",
    "X72n1435_017:0299b19_7": "胡張三黑李四。",
    "X72n1435_017:0299b19_8": "從來不問渠名字。",
    "X72n1435_017:0299b20_9": "空花落盡見青天。",
    "X72n1435_017:0299b20_10": "敢道頓然超十地。",
    "X72n1435_017:0299b21_0": "示順涯禪人",
    "X72n1435_017:0299b22_0": "入僧數非難易。",
    "X72n1435_017:0299b22_1": "蹈矩循規理不違。",
    "X72n1435_017:0299b22_2": "韜光混俗渾閒事。",
    "X72n1435_017:0299b23_0": "動止無非振祖威。",
    "X72n1435_017:0299b23_1": "棲巖壑住柴扉。",
    "X72n1435_017:0299b23_2": "騰騰養得肚皮肥。",
    "X72n1435_017:0299b24_0": "就中一種真三昧。",
    "X72n1435_017:0299b24_1": "猛火叢中片雪飛。",
    "X72n1435_017:0299b24_2": "知也未察幾微。",
    "X72n1435_017:0299c01_0": "晴空白日雨霏霏。",
    "X72n1435_017:0299c01_1": "光明八萬四千土。",
    "X72n1435_017:0299c01_2": "土土皆作黃金輝。",
    "X72n1435_017:0299c02_3": "袈裟紫衲衣緋。",
    "X72n1435_017:0299c02_4": "驀地逢人拄杖揮。",
    "X72n1435_017:0299c02_5": "三餐茶飯隨時度。",
    "X72n1435_017:0299c03_6": "渴飲清泉饑食薇。",
    "X72n1435_017:0299c03_7": "男兒到此恣豪放。",
    "X72n1435_017:0299c03_8": "更當勇力破重圍。",
    "X72n1435_017:0299c04_9": "都城祖意須親薦。",
    "X72n1435_017:0299c04_10": "淨白途中芳草菲。",
    "X72n1435_017:0299c05_0": "示古航關主",
    "X72n1435_017:0299c06_0": "君不見。",
    "X72n1435_017:0299c06_1": "天目山頭石作船。",
    "X72n1435_017:0299c06_2": "高峯大士居其巔。",
    "X72n1435_017:0299c06_3": "三十餘年瓔珞飯。",
    "X72n1435_017:0299c07_4": "至今人把清名傳。",
    "X72n1435_017:0299c07_5": "吾徒靜室亦何有。",
    "X72n1435_017:0299c07_6": "口不開兮足不走。",
    "X72n1435_017:0299c08_7": "赤身惟剩兩條眉。",
    "X72n1435_017:0299c08_8": "白手空拳誇抖擻。",
    "X72n1435_017:0299c08_9": "又不見朗公禪。",
    "X72n1435_017:0299c09_10": "鋤為枕子草為氈。",
    "X72n1435_017:0299c09_11": "佛法世緣何所似。",
    "X72n1435_017:0299c09_12": "磐石多恣白晝眠。",
    "X72n1435_017:0299c10_13": "吾徒不聞鋤與草。",
    "X72n1435_017:0299c10_14": "磐石藤蘿何處討。",
    "X72n1435_017:0299c11_0": "開窻祇可見青天。",
    "X72n1435_017:0299c11_1": "一道靈明光皜皜。",
    "X72n1435_017:0299c11_2": "莫將此際當尋常。",
    "X72n1435_017:0299c12_3": "光非照境境非光。",
    "X72n1435_017:0299c12_4": "倐然廓徹通無礙。",
    "X72n1435_017:0299c12_5": "便是心空及第郎。",
    "X72n1435_017:0299c14_0": "示李希仁居士",
    "X72n1435_017:0299c15_0": "君不見。",
    "X72n1435_017:0299c15_1": "此事不與教乘合。",
    "X72n1435_017:0299c15_2": "敢將外典分優劣。",
    "X72n1435_017:0299c15_3": "坐斷虗空逼塞時。",
    "X72n1435_017:0299c16_4": "大千沙界無遺子。",
    "X72n1435_017:0299c16_5": "是途中非考輟。",
    "X72n1435_017:0299c16_6": "只須吐出廣長舌。",
    "X72n1435_017:0299c17_7": "無情敷演妙伽陀。",
    "X72n1435_017:0299c17_8": "塵說剎說眾生說。",
    "X72n1435_017:0299c17_9": "山可傾海可竭。",
    "X72n1435_017:0299c18_10": "日可冷兮月可熱。",
    "X72n1435_017:0299c18_11": "獨有禪門不動尊。",
    "X72n1435_017:0299c18_12": "笑看紅爐飛白。",
    "X72n1435_017:0299c19_13": "雪爆得斷卒得折。",
    "X72n1435_017:0299c19_14": "旋機轉位誇豪傑。",
    "X72n1435_017:0299c19_15": "四方八面任縱橫。",
    "X72n1435_017:0299c20_16": "何妨弄巧翻成拙。",
    "X72n1435_017:0299c20_17": "鼓是非稱奇絕。",
    "X72n1435_017:0299c20_18": "金毛跳入野狐穴。",
    "X72n1435_017:0299c21_19": "捋虎搏龍興未闌。",
    "X72n1435_017:0299c21_20": "泥人肋下三條鐵。",
    "X72n1435_017:0299c21_21": "大因緣好時節。",
    "X72n1435_017:0299c22_22": "為君細解同心結。",
    "X72n1435_017:0299c22_23": "列聖叢中向上關。",
    "X72n1435_017:0299c22_24": "熟讀斯文真口訣。",
    "X72n1435_017:0299c24_0": "示禪人",
    "X72n1435_017:0300a01_0": "人生天壤間。",
    "X72n1435_017:0300a01_1": "幻質若浮漚。",
    "X72n1435_017:0300a01_2": "虗脆無真實。",
    "X72n1435_017:0300a01_3": "苦向身外求。",
    "X72n1435_017:0300a02_0": "譬如朝露花。",
    "X72n1435_017:0300a02_1": "又如塗地油。",
    "X72n1435_017:0300a02_2": "須臾便斂跡。",
    "X72n1435_017:0300a02_3": "胡為不知休。",
    "X72n1435_017:0300a03_0": "人身優曇開。",
    "X72n1435_017:0300a03_1": "芥子針鋒投。",
    "X72n1435_017:0300a03_2": "赤肉明珠窟。",
    "X72n1435_017:0300a03_3": "青山碧玉樓。",
    "X72n1435_017:0300a04_0": "披襟彌寶色。",
    "X72n1435_017:0300a04_1": "動步遂清幽。",
    "X72n1435_017:0300a04_2": "肯逐塵緣使。",
    "X72n1435_017:0300a04_3": "竛竮空白頭。",
    "X72n1435_017:0300a05_0": "示方赤城侍御",
    "X72n1435_017:0300a06_0": "紅光彌雉堞。",
    "X72n1435_017:0300a06_1": "清瘦晏居中。",
    "X72n1435_017:0300a06_2": "鬚髮皤然白。",
    "X72n1435_017:0300a06_3": "衣冠興愈濃。",
    "X72n1435_017:0300a07_0": "名言蘇困躓。",
    "X72n1435_017:0300a07_1": "門第鼓祥風。",
    "X72n1435_017:0300a07_2": "燕雀高眉宇。",
    "X72n1435_017:0300a07_3": "圖書飽幼童。",
    "X72n1435_017:0300a08_0": "寂住添靈翠。",
    "X72n1435_017:0300a08_1": "浮山起彥嶐。",
    "X72n1435_017:0300a08_2": "溪聲清過樂。",
    "X72n1435_017:0300a08_3": "雲勢活如龍。",
    "X72n1435_017:0300a09_0": "他日重遊處。",
    "X72n1435_017:0300a09_1": "相將看嶺松。",
    "X72n1435_017:0300a10_0": "示六義禪人",
    "X72n1435_017:0300a11_0": "誰云有六義。",
    "X72n1435_017:0300a11_1": "寧知一字無。",
    "X72n1435_017:0300a11_2": "寄身如浮雲。",
    "X72n1435_017:0300a11_3": "經世一須臾。",
    "X72n1435_017:0300a12_0": "男兒氣浩然。",
    "X72n1435_017:0300a12_1": "眉宇動天樞。",
    "X72n1435_017:0300a12_2": "灼然沒巴鼻。",
    "X72n1435_017:0300a12_3": "逈與生死殊。",
    "X72n1435_017:0300a13_0": "打開大散關。",
    "X72n1435_017:0300a13_1": "壯哉始自娛。",
    "X72n1435_017:0300a13_2": "莫學班白人。",
    "X72n1435_017:0300a13_3": "喃喃讀梵書。",
    "X72n1435_017:0300a14_0": "論義如流水。",
    "X72n1435_017:0300a14_1": "究竟若茭蘆。",
    "X72n1435_017:0300a14_2": "真是獅子兒。",
    "X72n1435_017:0300a14_3": "生成鐵額顱。",
    "X72n1435_017:0300a15_0": "又如猛丈夫。",
    "X72n1435_017:0300a15_1": "抒海求明珠。",
    "X72n1435_017:0300a15_2": "只教親瞥地。",
    "X72n1435_017:0300a15_3": "裂破祖師圖。",
    "X72n1435_017:0300a16_0": "示陳□□居士",
    "X72n1435_017:0300a17_0": "遍界不曾藏。",
    "X72n1435_017:0300a17_1": "眼根豈能見。",
    "X72n1435_017:0300a17_2": "除是悟心人。",
    "X72n1435_017:0300a17_3": "當下討方便。",
    "X72n1435_017:0300a18_0": "單提句話頭。",
    "X72n1435_017:0300a18_1": "深追與力究。",
    "X72n1435_017:0300a18_2": "纔欲涉思惟。",
    "X72n1435_017:0300a18_3": "圓明成過咎。",
    "X72n1435_017:0300a19_0": "譬如破重關。",
    "X72n1435_017:0300a19_1": "力與萬人敵。",
    "X72n1435_017:0300a19_2": "通身都是膽。",
    "X72n1435_017:0300a19_3": "輸贏在咫尺。",
    "X72n1435_017:0300a20_0": "那復論危亡。",
    "X72n1435_017:0300a20_1": "亦不分彼我。",
    "X72n1435_017:0300a20_2": "抹轉上頭關。",
    "X72n1435_017:0300a20_3": "無可無不可。",
    "X72n1435_017:0300a21_0": "果是獅子兒。",
    "X72n1435_017:0300a21_1": "不向那邊討。",
    "X72n1435_017:0300a21_2": "力就解翻身。",
    "X72n1435_017:0300a21_3": "根塵光皎皎。",
    "X72n1435_017:0300a22_0": "清風拂夜月。",
    "X72n1435_017:0300a22_1": "旭日盡朝露。",
    "X72n1435_017:0300a22_2": "萬象咸點頭。",
    "X72n1435_017:0300a22_3": "森羅盡回互。",
    "X72n1435_017:0300a23_0": "喚作無事人。",
    "X72n1435_017:0300a23_1": "喚作猛烈漢。",
    "X72n1435_017:0300a23_2": "更擬問如何。",
    "X72n1435_017:0300a23_3": "水浸石頭爛。",
    "X72n1435_017:0300a24_0": "示李借假居士",
    "X72n1435_017:0300b01_0": "念佛與參禪。",
    "X72n1435_017:0300b01_1": "法門最直路。",
    "X72n1435_017:0300b01_2": "鎮海傾明珠。",
    "X72n1435_017:0300b01_3": "樂邦宣淨土。",
    "X72n1435_017:0300b02_0": "和盤盡托出。",
    "X72n1435_017:0300b02_1": "覿面絕差互。",
    "X72n1435_017:0300b02_2": "遠祖蓮花開。",
    "X72n1435_017:0300b02_3": "趙州驢馬度。",
    "X72n1435_017:0300b03_0": "抑揚激教源。",
    "X72n1435_017:0300b03_1": "高下辯宗譜。",
    "X72n1435_017:0300b03_2": "塵界毫端析。",
    "X72n1435_017:0300b03_3": "法身全體露。",
    "X72n1435_017:0300b04_0": "花開德水清。",
    "X72n1435_017:0300b04_1": "酒醒衣珠悟。",
    "X72n1435_017:0300b04_2": "謾言佛土佛。",
    "X72n1435_017:0300b04_3": "須識主中主。",
    "X72n1435_017:0300b05_0": "念佛與參禪。",
    "X72n1435_017:0300b05_1": "祥雲和紫霧。",
    "X72n1435_017:0300b05_2": "隨方布德澤。",
    "X72n1435_017:0300b05_3": "切莫生猶豫。",
    "X72n1435_017:0300b06_0": "付囑應弘通。",
    "X72n1435_017:0300b06_1": "化儀非小補。",
    "X72n1435_017:0300b06_2": "果得兼行之。",
    "X72n1435_017:0300b06_3": "真如帶角虎。",
    "X72n1435_017:0300b07_0": "示詹智安居士",
    "X72n1435_017:0300b08_0": "實相毋容寄足。",
    "X72n1435_017:0300b08_1": "虗空豈是真心。",
    "X72n1435_017:0300b08_2": "坐斷十方窠臼。",
    "X72n1435_017:0300b08_3": "頂門痛下金針。",
    "X72n1435_017:0300b09_4": "掉轉乾坤何境界。",
    "X72n1435_017:0300b09_5": "拈來。",
    "X72n1435_017:0300b09_6": "沙土盡黃金。",
    "X72n1435_017:0300b10_0": "示古輝維那",
    "X72n1435_017:0300b11_0": "提起話頭。",
    "X72n1435_017:0300b11_1": "倚天長劍。",
    "X72n1435_017:0300b11_2": "斷生死流。",
    "X72n1435_017:0300b11_3": "碎魔軍殿。",
    "X72n1435_017:0300b11_4": "不斬黧奴。",
    "X72n1435_017:0300b12_0": "豈肯放手。",
    "X72n1435_017:0300b12_1": "直破重圍。",
    "X72n1435_017:0300b12_2": "先須知有。",
    "X72n1435_017:0300b12_3": "知有體玄。",
    "X72n1435_017:0300b12_4": "如臨深淵。",
    "X72n1435_017:0300b13_0": "約不退後。",
    "X72n1435_017:0300b13_1": "推不向前。",
    "X72n1435_017:0300b13_2": "勇不顧身。",
    "X72n1435_017:0300b13_3": "命根始斷。",
    "X72n1435_017:0300b13_4": "絕後再甦。",
    "X72n1435_017:0300b14_0": "救得一半。",
    "X72n1435_017:0300b14_1": "一半倔強。",
    "X72n1435_017:0300b14_2": "拗折拄杖。",
    "X72n1435_017:0300b14_3": "絕思惟時。",
    "X72n1435_017:0300b14_4": "來喫痛棒。",
    "X72n1435_017:0300b15_0": "示殊常二禪人",
    "X72n1435_017:0300b16_0": "一歸何處。",
    "X72n1435_017:0300b16_1": "是擎天柱。",
    "X72n1435_017:0300b16_2": "抹轉額顱。",
    "X72n1435_017:0300b16_3": "笑破了去。",
    "X72n1435_017:0300b16_4": "別子江上。",
    "X72n1435_017:0300b17_0": "浪花麤分。",
    "X72n1435_017:0300b17_1": "明月照珊瑚樹。",
    "X72n1435_017:0300b17_2": "只饒坐斷清虗。",
    "X72n1435_017:0300b17_3": "解活也須回互。",
    "X72n1435_017:0300b18_4": "雙雙行也雙雙行。",
    "X72n1435_017:0300b18_5": "須知一住一不住。",
    "X72n1435_017:0300b19_0": "示智和禪人",
    "X72n1435_017:0300b20_0": "遇午一餐。",
    "X72n1435_017:0300b20_1": "遇晚一宿。",
    "X72n1435_017:0300b20_2": "此是何緣。",
    "X72n1435_017:0300b20_3": "無非順俗。",
    "X72n1435_017:0300b20_4": "忽朝踢破指頭。",
    "X72n1435_017:0300b21_5": "敢道。",
    "X72n1435_017:0300b21_6": "玄沙受屈。",
    "X72n1435_017:0300b21_7": "屈不屈。",
    "X72n1435_017:0300b21_8": "聽叮囑。",
    "X72n1435_017:0300b21_9": "藍田片玉本來輝。",
    "X72n1435_017:0300b22_10": "脫[穀-禾+卵]烏龜火裏浴。",
    "X72n1435_017:0300b23_0": "示玄機禪人",
    "X72n1435_017:0300b24_0": "癡癡獃獃。",
    "X72n1435_017:0300b24_1": "好去邏齋。",
    "X72n1435_017:0300b24_2": "昨日南嶽。",
    "X72n1435_017:0300b24_3": "今朝天台。",
    "X72n1435_017:0300b24_4": "兩瓢熱水。",
    "X72n1435_017:0300c01_0": "一束乾柴。",
    "X72n1435_017:0300c01_1": "梅子熟也。",
    "X72n1435_017:0300c01_2": "還我核來。",
    "X72n1435_017:0300c01_3": "若將持呪為禪要。",
    "X72n1435_017:0300c01_4": "天下禪人盡活埋。",
    "X72n1435_017:0300c03_0": "示徐六嶽宮保元勛",
    "X72n1435_017:0300c04_0": "不忘靈山親付囑。",
    "X72n1435_017:0300c04_1": "長安大道行人速。",
    "X72n1435_017:0300c04_2": "一鞭木馬蹋花飛。",
    "X72n1435_017:0300c05_3": "九重宮殿爐煙馥。",
    "X72n1435_017:0300c05_4": "閒拈拄杖撞虗空。",
    "X72n1435_017:0300c05_5": "逼塞誰分心境同。",
    "X72n1435_017:0300c06_6": "到得還家花未老。",
    "X72n1435_017:0300c06_7": "白雲依舊故山中。",
    "X72n1435_017:0300c07_0": "示方心寰徹侯",
    "X72n1435_017:0300c08_0": "不忘靈山親付囑。",
    "X72n1435_017:0300c08_1": "大鵬久住金剛窟。",
    "X72n1435_017:0300c08_2": "但問歸家歸未曾。",
    "X72n1435_017:0300c09_3": "休將古德商遲速。",
    "X72n1435_017:0300c09_4": "虗樓百尺倚晴空。",
    "X72n1435_017:0300c09_5": "門閉梯捐路自通。",
    "X72n1435_017:0300c10_6": "不動步時彈指入。",
    "X72n1435_017:0300c10_7": "樓前木馬夜嘶風。",
    "X72n1435_017:0300c11_0": "示詹見五勛卿",
    "X72n1435_017:0300c12_0": "不忘靈山親付囑。",
    "X72n1435_017:0300c12_1": "紅塵豈障參禪骨。",
    "X72n1435_017:0300c12_2": "雲衣不挂忽然甦。",
    "X72n1435_017:0300c13_3": "滿目桃花春簇簇。",
    "X72n1435_017:0300c13_4": "春風吹樹看春來。",
    "X72n1435_017:0300c13_5": "露柱生兒笑滿腮。",
    "X72n1435_017:0300c14_6": "識得無生親的子。",
    "X72n1435_017:0300c14_7": "任君掩耳過經臺。",
    "X72n1435_017:0300c15_0": "示顧醒石鴻臚",
    "X72n1435_017:0300c16_0": "不忘靈山親付囑。",
    "X72n1435_017:0300c16_1": "者箇都非心佛物。",
    "X72n1435_017:0300c16_2": "驀爾通身熱汗流。",
    "X72n1435_017:0300c17_3": "一味之間百味足。",
    "X72n1435_017:0300c17_4": "百味誰甞一味非。",
    "X72n1435_017:0300c17_5": "旅中無繫自知歸。",
    "X72n1435_017:0300c18_6": "解道澄江淨如練。",
    "X72n1435_017:0300c18_7": "令人常憶謝玄暉。",
    "X72n1435_017:0300c19_0": "示徐南高冏卿",
    "X72n1435_017:0300c20_0": "不忘靈山親付囑。",
    "X72n1435_017:0300c20_1": "紅藕池邊波可掬。",
    "X72n1435_017:0300c20_2": "通身獨露放光明萬里山河清淨目。",
    "X72n1435_017:0300c21_3": "庭生瑞草未為奇。",
    "X72n1435_017:0300c21_4": "瓮裏醃虀變紫芝。",
    "X72n1435_017:0300c22_5": "碧眼胡師吞未盡。",
    "X72n1435_017:0300c22_6": "酸甜祇貴大家知。",
    "X72n1435_017:0300c23_0": "示何天玉冏卿",
    "X72n1435_017:0300c24_0": "不忘靈山親付囑。",
    "X72n1435_017:0300c24_1": "識取未生前面目。",
    "X72n1435_017:0300c24_2": "柳風梧月主人醒。",
    "X72n1435_017:0301a01_3": "掃花閒殺樵青僕。",
    "X72n1435_017:0301a01_4": "春到黃鶯語亦親。",
    "X72n1435_017:0301a01_5": "半塘遙隔見通津。",
    "X72n1435_017:0301a02_6": "還他寶釧金羇子。",
    "X72n1435_017:0301a02_7": "任我穿衣喫飯人。",
    "X72n1435_017:0301a03_0": "示俞容自勛卿",
    "X72n1435_017:0301a04_0": "不忘靈山親付囑。",
    "X72n1435_017:0301a04_1": "學道先教無猒足。",
    "X72n1435_017:0301a04_2": "假饒已悟更加鞭。",
    "X72n1435_017:0301a05_3": "管取千魔俱殞沒。",
    "X72n1435_017:0301a05_4": "護持須護自心玉。",
    "X72n1435_017:0301a05_5": "氷雪中間別有香。",
    "X72n1435_017:0301a06_6": "大著眼眶看仔細。",
    "X72n1435_017:0301a06_7": "丈夫眉宇舊昂藏。",
    "X72n1435_017:0301a07_0": "示徐孟麟侍御",
    "X72n1435_017:0301a08_0": "不忘靈山親付囑。",
    "X72n1435_017:0301a08_1": "光明智火燒殘牘。",
    "X72n1435_017:0301a08_2": "逢人何處著商量。",
    "X72n1435_017:0301a09_3": "盡日芙蓉看未足。",
    "X72n1435_017:0301a09_4": "芙蓉霜刃向雲磨。",
    "X72n1435_017:0301a09_5": "魔佛由來奈爾何。",
    "X72n1435_017:0301a10_6": "露布已聞鐃吹奏。",
    "X72n1435_017:0301a10_7": "太平端許臥山阿。",
    "X72n1435_017:0301a11_0": "示任文升侍御",
    "X72n1435_017:0301a12_0": "不忘靈山親付囑。",
    "X72n1435_017:0301a12_1": "緣生世諦多林麓。",
    "X72n1435_017:0301a12_2": "剖開慧眼顯全機。",
    "X72n1435_017:0301a13_3": "肯向塵緣空碌碌。",
    "X72n1435_017:0301a13_4": "突出衣中無價珍。",
    "X72n1435_017:0301a13_5": "從來見處不依人。",
    "X72n1435_017:0301a14_6": "大圓覺體光明藏。",
    "X72n1435_017:0301a14_7": "淨白元無一點塵。",
    "X72n1435_017:0301a15_0": "示吳黃嶽侍御",
    "X72n1435_017:0301a16_0": "不忘靈山親付囑。",
    "X72n1435_017:0301a16_1": "清光靄靄彌山谷。",
    "X72n1435_017:0301a16_2": "舉頭誰不見青天。",
    "X72n1435_017:0301a17_3": "男兒肯向他尋逐。",
    "X72n1435_017:0301a17_4": "待客迎賓事事長。",
    "X72n1435_017:0301a17_5": "跬步何曾離本鄉。",
    "X72n1435_017:0301a18_6": "了知動轉非他物。",
    "X72n1435_017:0301a18_7": "優鉢羅花遍界香。",
    "X72n1435_017:0301a19_0": "示朱羅青民部",
    "X72n1435_017:0301a20_0": "不忘靈山親付囑。",
    "X72n1435_017:0301a20_1": "回頭紙穴癡蠅出。",
    "X72n1435_017:0301a20_2": "疑情舉處要分明。",
    "X72n1435_017:0301a21_3": "莫把心量重卜度。",
    "X72n1435_017:0301a21_4": "大千經卷一塵微。",
    "X72n1435_017:0301a21_5": "只貴當人剖出之。",
    "X72n1435_017:0301a22_6": "曾向洛陽宮裏過。",
    "X72n1435_017:0301a22_7": "春花春鳥總宜詩。",
    "X72n1435_017:0301a23_0": "示蔡聖龍祠部",
    "X72n1435_017:0301a24_0": "不忘靈山親付囑。",
    "X72n1435_017:0301a24_1": "慧燈好向風前續。",
    "X72n1435_017:0301a24_2": "青天白露鷲峯明。",
    "X72n1435_017:0301b01_3": "更從何處分真佛。",
    "X72n1435_017:0301b01_4": "無分無別阿誰知。",
    "X72n1435_017:0301b01_5": "當下知歸我是誰。",
    "X72n1435_017:0301b02_6": "猛火煅成清淨土。",
    "X72n1435_017:0301b02_7": "一聲孤雁夜聽遲。",
    "X72n1435_017:0301b03_0": "示龐序皇司馬",
    "X72n1435_017:0301b04_0": "不忘靈山親付囑。",
    "X72n1435_017:0301b04_1": "春氣非傳紅與綠。",
    "X72n1435_017:0301b04_2": "一念攀緣眼底花。",
    "X72n1435_017:0301b05_3": "片言玄玅膺中物。",
    "X72n1435_017:0301b05_4": "空諸所有實諸無。",
    "X72n1435_017:0301b05_5": "活殺從來是丈夫。",
    "X72n1435_017:0301b06_6": "山色溪聲還跳出。",
    "X72n1435_017:0301b06_7": "閙藍風雨對屠沽。",
    "X72n1435_017:0301b07_0": "示曹安祖司馬",
    "X72n1435_017:0301b08_0": "不忘靈山親付囑。",
    "X72n1435_017:0301b08_1": "浩然氣宇餐天祿。",
    "X72n1435_017:0301b08_2": "堂堂妙用絕周遮。",
    "X72n1435_017:0301b09_3": "百匝千重光晃昱。",
    "X72n1435_017:0301b09_4": "底事分明說似君。",
    "X72n1435_017:0301b09_5": "碧空花雨亂紛紜。",
    "X72n1435_017:0301b10_6": "飯餘柳岸經行慣。",
    "X72n1435_017:0301b10_7": "清風微動水成紋。",
    "X72n1435_017:0301b11_0": "示吳泊如繕部",
    "X72n1435_017:0301b12_0": "不忘靈山親付囑。",
    "X72n1435_017:0301b12_1": "海外波斯雙赤足。",
    "X72n1435_017:0301b12_2": "夜來龍藏掌中生。",
    "X72n1435_017:0301b13_3": "鎚碎休教添碌碌。",
    "X72n1435_017:0301b13_4": "俊鶻摩天秋氣高。",
    "X72n1435_017:0301b13_5": "虗空無物見纖毫。",
    "X72n1435_017:0301b14_6": "驅耕奪食男兒事。",
    "X72n1435_017:0301b14_7": "一任西風爽布袍。",
    "X72n1435_017:0301b15_0": "示王季常繕部",
    "X72n1435_017:0301b16_0": "不忘靈山親付囑。",
    "X72n1435_017:0301b16_1": "雪冷須彌偏突兀。",
    "X72n1435_017:0301b16_2": "拈來青棗大如瓜。",
    "X72n1435_017:0301b17_3": "見後桃花清似菊。",
    "X72n1435_017:0301b17_4": "熱油鐺舐大方饞。",
    "X72n1435_017:0301b17_5": "莫使重留貼肉衫。",
    "X72n1435_017:0301b18_6": "到得感恩知愧日。",
    "X72n1435_017:0301b18_7": "許君親見老香嚴。",
    "X72n1435_017:0301b19_0": "示白雉衡虞部",
    "X72n1435_017:0301b20_0": "不忘靈山親付囑。",
    "X72n1435_017:0301b20_1": "社舞村歌堪薦入。",
    "X72n1435_017:0301b20_2": "歌聲鼓節遣誰聞。",
    "X72n1435_017:0301b21_3": "耳中供箇觀音佛。",
    "X72n1435_017:0301b21_4": "虗空消殞一人邊。",
    "X72n1435_017:0301b21_5": "草淨湖南萬里天。",
    "X72n1435_017:0301b22_6": "一句相憑重道當。",
    "X72n1435_017:0301b22_7": "石人雙耳聽聲前。",
    "X72n1435_017:0301b23_0": "示周敏山水部",
    "X72n1435_017:0301b24_0": "不忘靈山親付囑。",
    "X72n1435_017:0301b24_1": "珊瑚影映澄江綠。",
    "X72n1435_017:0301b24_2": "清風明月兩相知。",
    "X72n1435_017:0301c01_3": "蓮花水面如車軸。",
    "X72n1435_017:0301c01_4": "石頭城外草芊芊。",
    "X72n1435_017:0301c01_5": "蹋月穿雲知幾年。",
    "X72n1435_017:0301c02_6": "一自洞庭歌罷後。",
    "X72n1435_017:0301c02_7": "至今花雨尚蹁蹮。",
    "X72n1435_017:0301c03_0": "示金蘿石田曹",
    "X72n1435_017:0301c04_0": "不忘靈山親付囑。",
    "X72n1435_017:0301c04_1": "禪牀直竪蒼山骨。",
    "X72n1435_017:0301c04_2": "逈然一念射當人。",
    "X72n1435_017:0301c05_3": "此是吾家真種族。",
    "X72n1435_017:0301c05_4": "空花輪轉本來無。",
    "X72n1435_017:0301c05_5": "迷悟俱非井覰驢。",
    "X72n1435_017:0301c06_6": "討得钁頭些子味。",
    "X72n1435_017:0301c06_7": "臥雲嘯月種松株。",
    "X72n1435_017:0301c07_0": "示吳鬯膏田曹",
    "X72n1435_017:0301c08_0": "不忘靈山親付囑。",
    "X72n1435_017:0301c08_1": "刻刻須教深入木。",
    "X72n1435_017:0301c08_2": "和身迸透頂門開。",
    "X72n1435_017:0301c09_3": "六六原來三十六。",
    "X72n1435_017:0301c09_4": "鐵船無恙海潮通。",
    "X72n1435_017:0301c09_5": "月落沙寒釣已窮。",
    "X72n1435_017:0301c10_6": "若向此中親薦得。",
    "X72n1435_017:0301c10_7": "竹簫吹過斷蘆中。",
    "X72n1435_017:0301c11_0": "示丁蓮侶國博",
    "X72n1435_017:0301c12_0": "不忘靈山親付囑。",
    "X72n1435_017:0301c12_1": "寶華淨界無延促。",
    "X72n1435_017:0301c12_2": "眉眶之下鼻頭垂。",
    "X72n1435_017:0301c13_3": "何人解把舟行陸。",
    "X72n1435_017:0301c13_4": "方舟渡子不曾迷。",
    "X72n1435_017:0301c13_5": "說著河源却未知。",
    "X72n1435_017:0301c14_6": "雪滿短蓑寒夢破。",
    "X72n1435_017:0301c14_7": "自驚身是釣魚師。",
    "X72n1435_017:0301c15_0": "示林如冲奉常",
    "X72n1435_017:0301c16_0": "不忘靈山親付囑。",
    "X72n1435_017:0301c16_1": "熟處當生生處熟。",
    "X72n1435_017:0301c16_2": "却將生熟一鐺煎。",
    "X72n1435_017:0301c17_3": "跛鱉盲龜稱萬福。",
    "X72n1435_017:0301c17_4": "出門何地不青山。",
    "X72n1435_017:0301c17_5": "傍晚征夫閒未閒。",
    "X72n1435_017:0301c18_6": "開徹碓花供醉眼。",
    "X72n1435_017:0301c18_7": "磨成磚鏡照衰顏。",
    "X72n1435_017:0301c19_0": "示吳文孫中祕",
    "X72n1435_017:0301c20_0": "不忘靈山親付囑。",
    "X72n1435_017:0301c20_1": "頭頭法法光明域。",
    "X72n1435_017:0301c20_2": "虗堂無事一聲雷。",
    "X72n1435_017:0301c21_3": "野狐跳入金毛窟。",
    "X72n1435_017:0301c21_4": "金毛獅子解翻身。",
    "X72n1435_017:0301c21_5": "者裏分明不昧因。",
    "X72n1435_017:0301c22_6": "吐却狐涎入狐隊。",
    "X72n1435_017:0301c22_7": "出山人是住山人。",
    "X72n1435_017:0301c23_0": "示汪叔度進士",
    "X72n1435_017:0301c24_0": "不忘靈山親付囑。",
    "X72n1435_017:0301c24_1": "康莊車馬偏難忽。",
    "X72n1435_017:0301c24_2": "黃塵冉冉遍天涯。",
    "X72n1435_017:0302a01_3": "憑君拭洗青山俗。",
    "X72n1435_017:0302a01_4": "青山無況著秋煙。",
    "X72n1435_017:0302a01_5": "鹿草龍芝種玉田。",
    "X72n1435_017:0302a02_6": "獨有一年收未得。",
    "X72n1435_017:0302a02_7": "祖珍拋散禁城邊。",
    "X72n1435_017:0302a03_0": "示沈得一孝廉",
    "X72n1435_017:0302a04_0": "不忘靈山親付囑。",
    "X72n1435_017:0302a04_1": "得意驊騮風趂足。",
    "X72n1435_017:0302a04_2": "奔騰蹴蹋見分明。",
    "X72n1435_017:0302a05_3": "萬里空山尋古宿。",
    "X72n1435_017:0302a05_4": "尋人花影落繽紛。",
    "X72n1435_017:0302a05_5": "玉帶誰教報衲裙。",
    "X72n1435_017:0302a06_6": "合有臨行饒舌處。",
    "X72n1435_017:0302a06_7": "鍾山雲似博山雲。",
    "X72n1435_017:0302a07_0": "示陳賁生孝廉",
    "X72n1435_017:0302a08_0": "不忘靈山親付囑。",
    "X72n1435_017:0302a08_1": "白石蒼松堪擊筑。",
    "X72n1435_017:0302a08_2": "擊出針鋒一線通。",
    "X72n1435_017:0302a09_3": "千流萬派看漩澓。",
    "X72n1435_017:0302a09_4": "山頭白浪海中塵。",
    "X72n1435_017:0302a09_5": "囊裏無錢賸買春。",
    "X72n1435_017:0302a10_6": "月滿珊瑚枝自露。",
    "X72n1435_017:0302a10_7": "跏趺應笑劫前身。",
    "X72n1435_017:0302a11_0": "示徐六虗孝廉",
    "X72n1435_017:0302a12_0": "不忘靈山親付囑。",
    "X72n1435_017:0302a12_1": "宗門豈傍他人入。",
    "X72n1435_017:0302a12_2": "英雄眼底笑男兒。",
    "X72n1435_017:0302a13_3": "清風古路無迂曲。",
    "X72n1435_017:0302a13_4": "參禪先令識心閒。",
    "X72n1435_017:0302a13_5": "錦鯉成龍一躍間。",
    "X72n1435_017:0302a14_6": "皮袋生光情愛盡。",
    "X72n1435_017:0302a14_7": "淡將言句寫溪山。",
    "X72n1435_017:0302a15_0": "示曹清之奉常",
    "X72n1435_017:0302a16_0": "不忘靈山親付囑。",
    "X72n1435_017:0302a16_1": "參禪莫就禪中宿。",
    "X72n1435_017:0302a16_2": "當日惟知劍柄長。",
    "X72n1435_017:0302a17_3": "而今始覺毬門複。",
    "X72n1435_017:0302a17_4": "枯樁未始是枯樁。",
    "X72n1435_017:0302a17_5": "觸處風搖白玉幢。",
    "X72n1435_017:0302a18_6": "萬里泥牛奔影去。",
    "X72n1435_017:0302a18_7": "碧雲無賴滿春江。",
    "X72n1435_017:0302a19_0": "示陳允嘉廣文",
    "X72n1435_017:0302a20_0": "不忘靈山親付囑。",
    "X72n1435_017:0302a20_1": "斷崖峰頂黃茅屋。",
    "X72n1435_017:0302a20_2": "十方坐斷見春風。",
    "X72n1435_017:0302a21_3": "撥雲夜看千花谷。",
    "X72n1435_017:0302a21_4": "跨著楊岐三脚驢。",
    "X72n1435_017:0302a21_5": "不逢渠處也逢渠。",
    "X72n1435_017:0302a22_6": "解開布袋憑人看。",
    "X72n1435_017:0302a22_7": "妙用臨機果不殊。",
    "X72n1435_017:0302a23_0": "示張時華參軍",
    "X72n1435_017:0302a24_0": "不忘靈山親付囑。",
    "X72n1435_017:0302a24_1": "十年豫造征人服。",
    "X72n1435_017:0302a24_2": "征人未免挂征鞍。",
    "X72n1435_017:0302b01_3": "會免臨期多倉卒。",
    "X72n1435_017:0302b01_4": "繡幢煙影碧油車。",
    "X72n1435_017:0302b01_5": "放出南山鼈鼻蛇。",
    "X72n1435_017:0302b02_6": "若道葛藤猶未斷。",
    "X72n1435_017:0302b02_7": "一杯清供趙州茶。",
    "X72n1435_017:0302b03_0": "示周元執參軍",
    "X72n1435_017:0302b04_0": "不忘靈山親付囑。",
    "X72n1435_017:0302b04_1": "牧童明月騎歸犢。",
    "X72n1435_017:0302b04_2": "未到人牛不見時。",
    "X72n1435_017:0302b05_3": "休隨草色平川綠。",
    "X72n1435_017:0302b05_4": "雨餘芳草是前村。",
    "X72n1435_017:0302b05_5": "牧笛無端欲斷魂。",
    "X72n1435_017:0302b06_6": "却向古鄰荒寺去。",
    "X72n1435_017:0302b06_7": "大家扶起破沙盆。",
    "X72n1435_017:0302b07_0": "示劉斗樞司馬",
    "X72n1435_017:0302b08_0": "不忘靈山親付囑。",
    "X72n1435_017:0302b08_1": "縱橫出沒無拘束。",
    "X72n1435_017:0302b08_2": "閒雲蹤跡渺天壤。",
    "X72n1435_017:0302b09_3": "魔佛從來皆眷屬。",
    "X72n1435_017:0302b09_4": "放生容易殺生難。",
    "X72n1435_017:0302b09_5": "火宅之中呌野干。",
    "X72n1435_017:0302b10_6": "露地白牛車上坐。",
    "X72n1435_017:0302b10_7": "寶鈴珠網夜天寒。",
    "X72n1435_017:0302b11_0": "示吳淳太光祿",
    "X72n1435_017:0302b12_0": "不忘靈山親付囑。",
    "X72n1435_017:0302b12_1": "鉢盂中是千鍾粟。",
    "X72n1435_017:0302b12_2": "橫吞一粒齒牙香。",
    "X72n1435_017:0302b13_3": "却笑饑人果空腹。",
    "X72n1435_017:0302b13_4": "一粒原來何處生。",
    "X72n1435_017:0302b13_5": "大千心畝廓然平。",
    "X72n1435_017:0302b14_6": "夜來[腠天+貝]有栽秧雨。",
    "X72n1435_017:0302b14_7": "好向綠楊聽曉鶯。",
    "X72n1435_017:0302b15_0": "示葉翼所典謁",
    "X72n1435_017:0302b16_0": "不忘靈山親付囑。",
    "X72n1435_017:0302b16_1": "花蜂豈就空枝宿。",
    "X72n1435_017:0302b16_2": "鑽向銀山鐵壁中。",
    "X72n1435_017:0302b17_3": "他家好似無情物。",
    "X72n1435_017:0302b17_4": "場開選佛看登壇。",
    "X72n1435_017:0302b17_5": "莫道心空及第難。",
    "X72n1435_017:0302b18_6": "踢殺猢猻縛殺鬼。",
    "X72n1435_017:0302b18_7": "不知菩薩是何官。",
    "X72n1435_017:0302b19_0": "示丘言思宮端",
    "X72n1435_017:0302b20_0": "不忘靈山親付囑。",
    "X72n1435_017:0302b20_1": "彌陀一句無真俗。",
    "X72n1435_017:0302b20_2": "數珠繩斷佛聲消。",
    "X72n1435_017:0302b21_3": "卞和剖破荊山玉。",
    "X72n1435_017:0302b21_4": "分明寶鏡映千燈。",
    "X72n1435_017:0302b21_5": "擇葉尋枝我未曾。",
    "X72n1435_017:0302b22_6": "識得燒菴真供養。",
    "X72n1435_017:0302b22_7": "泥牛搖尾過窗櫺。",
    "X72n1435_017:0302b23_0": "示李在璞孝廉",
    "X72n1435_017:0302b24_0": "不忘靈山親付囑。",
    "X72n1435_017:0302b24_1": "脩幢拗折瀟湘竹。",
    "X72n1435_017:0302b24_2": "實相門開聲悄然。",
    "X72n1435_017:0302c01_3": "短衣破笠黃金域。",
    "X72n1435_017:0302c01_4": "江風淡蕩法身寒。",
    "X72n1435_017:0302c01_5": "江雨凄清夜未殘。",
    "X72n1435_017:0302c02_6": "休把鵑啼比鶯語。",
    "X72n1435_017:0302c02_7": "萬花叢裏現優曇。",
    "X72n1435_017:0302c03_0": "示葉白於中翰",
    "X72n1435_017:0302c04_0": "不忘靈山親付囑。",
    "X72n1435_017:0302c04_1": "期君試聽無生曲。",
    "X72n1435_017:0302c04_2": "無手人彈無耳聽。",
    "X72n1435_017:0302c05_3": "聚合從前親骨肉。",
    "X72n1435_017:0302c05_4": "團圞何處問他方。",
    "X72n1435_017:0302c05_5": "一片空心選佛場。",
    "X72n1435_017:0302c06_6": "打鼓却看誰作主。",
    "X72n1435_017:0302c06_7": "釣魚原是謝三郎。",
    "X72n1435_017:0302c07_0": "示余集生冏卿",
    "X72n1435_017:0302c08_0": "不忘靈山親付囑。",
    "X72n1435_017:0302c08_1": "爾自彈絲我吹竹。",
    "X72n1435_017:0302c08_2": "合成一調供眾生。",
    "X72n1435_017:0302c09_3": "梵天花雨成禾糓。",
    "X72n1435_017:0302c09_4": "攪不清兮燒不香。",
    "X72n1435_017:0302c09_5": "捉賊須教有正贓。",
    "X72n1435_017:0302c10_6": "溺器踢翻清夜曉。",
    "X72n1435_017:0302c10_7": "傳燈名字間僧行。",
    "X72n1435_017:0302c11_0": "示余周生都閫",
    "X72n1435_017:0302c12_0": "不忘靈山親付囑。",
    "X72n1435_017:0302c12_1": "日午虗窻剔明燭。",
    "X72n1435_017:0302c12_2": "厨前巧婦細思量。",
    "X72n1435_017:0302c13_3": "自笑能炊無米粥。",
    "X72n1435_017:0302c13_4": "諸天同器不同餐。",
    "X72n1435_017:0302c13_5": "肘後金符近已刓。",
    "X72n1435_017:0302c14_6": "馬足似雲弓似月。",
    "X72n1435_017:0302c14_7": "將軍今夜下三韓。",
    "X72n1435_017:0302c15_0": "示方士雄太學",
    "X72n1435_017:0302c16_0": "不忘靈山親付囑。",
    "X72n1435_017:0302c16_1": "青山滿目原非物。",
    "X72n1435_017:0302c16_2": "荊棘叢中穿過時。",
    "X72n1435_017:0302c17_3": "何論橫趨與直入。",
    "X72n1435_017:0302c17_4": "旋風八字打將來。",
    "X72n1435_017:0302c17_5": "寶網金繩觸處開。",
    "X72n1435_017:0302c18_6": "萬壑千巖春自暖。",
    "X72n1435_017:0302c18_7": "兔光和露護珠胎。",
    "X72n1435_017:0302c19_0": "示汪吉所居士",
    "X72n1435_017:0302c20_0": "不忘靈山親付囑。",
    "X72n1435_017:0302c20_1": "加鞭倒跨泥牛犢。",
    "X72n1435_017:0302c20_2": "牛背頻將鐵笛吹。",
    "X72n1435_017:0302c21_3": "聲聲韻出無生曲。",
    "X72n1435_017:0302c21_4": "無生曲子孰賡和。",
    "X72n1435_017:0302c21_5": "石人解拍木人歌。",
    "X72n1435_017:0302c22_6": "遊遍支那歸去晚。",
    "X72n1435_017:0302c22_7": "衣冠之下古彌陀。",
    "X72n1435_017:0302c23_0": "示陳旻昭文學",
    "X72n1435_017:0302c24_0": "不忘靈山親付囑。",
    "X72n1435_017:0302c24_1": "瓊苗遠發瀏陽佛。",
    "X72n1435_017:0302c24_2": "揚吾家醜。",
    "X72n1435_017:0302c24_3": "逼吾忙。",
    "X72n1435_017:0303a01_4": "管保千生受塗毒。",
    "X72n1435_017:0303a01_5": "千生祇在一朝圓。",
    "X72n1435_017:0303a01_6": "毒鼓聲騰萬馬先。",
    "X72n1435_017:0303a02_7": "廓爾子韶明物格。",
    "X72n1435_017:0303a02_8": "紫雲金殿暗香傳。",
    "X72n1435_017:0303a03_0": "示余得之居士",
    "X72n1435_017:0303a04_0": "不忘靈山親付囑。",
    "X72n1435_017:0303a04_1": "日用何妨耕與讀。",
    "X72n1435_017:0303a04_2": "書中全露聖賢心。",
    "X72n1435_017:0303a05_3": "大似良田獲嘉糓。",
    "X72n1435_017:0303a05_4": "聖賢俱自道場來。",
    "X72n1435_017:0303a05_5": "儒釋源流莫浪猜。",
    "X72n1435_017:0303a06_6": "會得拈花微笑旨。",
    "X72n1435_017:0303a06_7": "龜毛拂子舞三台。",
    "X72n1435_017:0303a07_0": "示剡水禪人",
    "X72n1435_017:0303a08_0": "不忘靈山親付囑。",
    "X72n1435_017:0303a08_1": "波澄三昧銀鷥浴。",
    "X72n1435_017:0303a08_2": "自從不解倒跨牛。",
    "X72n1435_017:0303a09_3": "石人淚墮相思曲。",
    "X72n1435_017:0303a09_4": "相思難寫夢初分。",
    "X72n1435_017:0303a09_5": "半是思君半恨君。",
    "X72n1435_017:0303a10_6": "若使琵琶能訴出。",
    "X72n1435_017:0303a10_7": "指端應現博山雲。",
    "X72n1435_017:0303a12_0": "無異禪師廣錄卷第十七"
}