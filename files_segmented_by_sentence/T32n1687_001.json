[
    {
        "source_sentence": "事師法五十頌馬鳴菩薩集",
        "from": "T32n1687_001:0775c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚",
        "from": "T32n1687_001:0775c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少卿宣梵大師賜紫沙門臣日稱",
        "from": "T32n1687_001:0775c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依諸經律祕密教，　　略出承事師儀軌，",
        "from": "T32n1687_001:0775c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已愛樂發淨心，　　當獲如來金剛智。",
        "from": "T32n1687_001:0775c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於灌頂師，　　三時伸禮奉，",
        "from": "T32n1687_001:0775c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為已供養，　　十方諸如來。",
        "from": "T32n1687_001:0775c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起最上恭敬，　　合掌以持花，",
        "from": "T32n1687_001:0776a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散彼曼挐羅，　　頭面接足禮。",
        "from": "T32n1687_001:0776a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼師或在家，　　及新受具戒，",
        "from": "T32n1687_001:0776a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置經像於前，　　則息諸疑謗。",
        "from": "T32n1687_001:0776a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出家弟子，　　常淨心承事，",
        "from": "T32n1687_001:0776a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已坐當起迎，　　唯除於致禮。",
        "from": "T32n1687_001:0776a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼師及弟子，　　當互審其器，",
        "from": "T32n1687_001:0776a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不先觀察，　　同得越法罪。",
        "from": "T32n1687_001:0776a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若忿恚無慈，　　貪愛多散亂，",
        "from": "T32n1687_001:0776a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慠易恃種族，　　以惠當揀擇。",
        "from": "T32n1687_001:0776a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具戒忍悲智，　　尊重無諂曲，",
        "from": "T32n1687_001:0776a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了祕密儀範，　　博閑諸論議，",
        "from": "T32n1687_001:0776a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善達真言相，　　曼挐羅事業，",
        "from": "T32n1687_001:0776a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契證十真如，　　諸根悉清淨。",
        "from": "T32n1687_001:0776a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼求法者，　　於師生輕毀，",
        "from": "T32n1687_001:0776a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則謗諸如來，　　常得諸苦惱。",
        "from": "T32n1687_001:0776a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由增上愚癡，　　而獲於現報，",
        "from": "T32n1687_001:0776a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為惡曜執持，　　重病相纏縛，",
        "from": "T32n1687_001:0776a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王法所逼切，　　及毒蛇傷螫，",
        "from": "T32n1687_001:0776a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冤賊水火難，　　非人得其便，",
        "from": "T32n1687_001:0776a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼頻那夜迦，　　常作諸障礙，",
        "from": "T32n1687_001:0776a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此而命終，　　即墮於惡趣。",
        "from": "T32n1687_001:0776a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令阿闍黎，　　少分生煩惱，",
        "from": "T32n1687_001:0776a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無智相違背，　　定入阿鼻獄，",
        "from": "T32n1687_001:0776a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受種種極苦，　　說之深可怖。",
        "from": "T32n1687_001:0776a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由謗阿闍黎，　　於中常止住，",
        "from": "T32n1687_001:0776a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼阿闍黎者，　　弘持正法藏，",
        "from": "T32n1687_001:0776a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當一心，　　輒莫生輕毀。",
        "from": "T32n1687_001:0776a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於阿闍黎，　　承事而供養，",
        "from": "T32n1687_001:0776a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發生尊重心，　　則蠲除障惱。",
        "from": "T32n1687_001:0776b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復於師所，　　樂行於喜捨，",
        "from": "T32n1687_001:0776b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不希於己身，　　何況於財物。",
        "from": "T32n1687_001:0776b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無量億劫，　　勇猛勤修習，",
        "from": "T32n1687_001:0776b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今始證菩提，　　斯極為希有。",
        "from": "T32n1687_001:0776b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善護其深誓，　　供養諸如來，",
        "from": "T32n1687_001:0776b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬阿闍黎，　　等同一切佛。",
        "from": "T32n1687_001:0776b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於己所有，　　最上諸珍玩，",
        "from": "T32n1687_001:0776b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求無盡菩提，　　誠心而奉獻。",
        "from": "T32n1687_001:0776b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施佛阿闍黎，　　念念常增長，",
        "from": "T32n1687_001:0776b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是最勝福田，　　速得菩提果。",
        "from": "T32n1687_001:0776b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是求法者，　　具戒忍功德，",
        "from": "T32n1687_001:0776b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不虛誑於師，　　當獲金剛智。",
        "from": "T32n1687_001:0776b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若足踏師影，　　獲罪如破塔，",
        "from": "T32n1687_001:0776b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於床坐資具，　　騎驀罪過是。",
        "from": "T32n1687_001:0776b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若師所教誨，　　歡喜當聽受，",
        "from": "T32n1687_001:0776b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自己或不能，　　則善言啟白。",
        "from": "T32n1687_001:0776b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由依止師故，　　所作皆成就，",
        "from": "T32n1687_001:0776b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現樂及生天，　　何敢違其命！",
        "from": "T32n1687_001:0776b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守護師財物，　　猶若己身命，",
        "from": "T32n1687_001:0776b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼執侍人，　　如親常敬奉。",
        "from": "T32n1687_001:0776b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應於師前，　　覆頂及乘御，",
        "from": "T32n1687_001:0776b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翹足手扠腰，　　安然而坐臥。",
        "from": "T32n1687_001:0776b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或事緣令坐，　　勿舒於雙足，",
        "from": "T32n1687_001:0776b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常具諸威儀，　　師起速當起。",
        "from": "T32n1687_001:0776b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於經行處，　　不應隨舉步，",
        "from": "T32n1687_001:0776b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端謹立於傍，　　無棄於涕涶。",
        "from": "T32n1687_001:0776b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦勿於師前，　　私竊而言說，",
        "from": "T32n1687_001:0776b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及隣近語笑，　　謌舞作唱等。",
        "from": "T32n1687_001:0776b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或令坐或起，　　各安徐禮敬，",
        "from": "T32n1687_001:0776c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於險路中，　　白已作前導。",
        "from": "T32n1687_001:0776c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又不應於前，　　身現疲勞相，",
        "from": "T32n1687_001:0776c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈指節作聲，　　倚柱及牆壁。",
        "from": "T32n1687_001:0776c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或浣衣濯足，　　及澡浴等事，",
        "from": "T32n1687_001:0776c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先白師令知，　　所作無令見。",
        "from": "T32n1687_001:0776c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復於師名，　　不應輒稱舉，",
        "from": "T32n1687_001:0776c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有固問者，　　當示之一字。",
        "from": "T32n1687_001:0776c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師或令幹集，　　當伺其遣使，",
        "from": "T32n1687_001:0776c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼所作事，　　憶持常不忘。",
        "from": "T32n1687_001:0776c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或笑嗽伸呿，　　則以手遮口，",
        "from": "T32n1687_001:0776c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有事啟聞，　　當曲躬軟語。",
        "from": "T32n1687_001:0776c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在家女人，　　淨心來聽法，",
        "from": "T32n1687_001:0776c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌具威儀，　　專視於師面。",
        "from": "T32n1687_001:0776c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已當奉持，　　捨離於憍慢，",
        "from": "T32n1687_001:0776c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常如初適嫁，　　低顏其慚𧹞。",
        "from": "T32n1687_001:0776c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼嚴身具，　　無復生愛樂，",
        "from": "T32n1687_001:0776c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與善非相應，　　皆思惟遠離。",
        "from": "T32n1687_001:0776c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常慕於師德，　　不應窺小過，",
        "from": "T32n1687_001:0776c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順獲成就，　　求過當自損。",
        "from": "T32n1687_001:0776c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法度弟子，　　曼拏羅護摩，",
        "from": "T32n1687_001:0776c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "城邑同師居，　　無旨不應作。",
        "from": "T32n1687_001:0776c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或說法所得，　　淨施諸財物，",
        "from": "T32n1687_001:0776c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉以奉其師，　　隨得而可用。",
        "from": "T32n1687_001:0776c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同學及法裔，　　不應為弟子，",
        "from": "T32n1687_001:0776c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不於師前，　　受承事禮敬。",
        "from": "T32n1687_001:0776c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以物上師，　　二手持奉獻，",
        "from": "T32n1687_001:0776c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師或有所施，　　常恭敬頂受。",
        "from": "T32n1687_001:0776c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自專修正行，　　常憶持不忘，",
        "from": "T32n1687_001:0776c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他或非律儀，　　愛語相教示。",
        "from": "T32n1687_001:0777a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若師所教勅，　　或病緣不作，",
        "from": "T32n1687_001:0777a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當作禮咨陳，　　斯則無其咎。",
        "from": "T32n1687_001:0777a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常令師歡喜，　　離諸煩惱事，",
        "from": "T32n1687_001:0777a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當勤而行之，　　恐繁故不述。",
        "from": "T32n1687_001:0777a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼金剛如來，　　親如是宣說，",
        "from": "T32n1687_001:0777a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘教所明，　　依師獲成就。",
        "from": "T32n1687_001:0777a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若弟子清淨，　　能歸依三寶，",
        "from": "T32n1687_001:0777a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使命將終，　　亦為宣法要，",
        "from": "T32n1687_001:0777a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及授祕密教，　　令作正法器；",
        "from": "T32n1687_001:0777a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若現相誦持，　　當獲根本罪。",
        "from": "T32n1687_001:0777a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能隨順師行學，　　則成一切諸功德，",
        "from": "T32n1687_001:0777a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我所集斯善因，　　願與眾生速成佛。",
        "from": "T32n1687_001:0777a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事師法五十頌",
        "from": "T32n1687_001:0777a14_100",
        "context_with_next_sentence": false
    }
]