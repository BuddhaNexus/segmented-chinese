[
    {
        "source_sentence": "般若波羅蜜多理趣經大樂不空",
        "from": "T19n1004_001:0617b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧真實金剛薩埵菩薩等一十",
        "from": "T19n1004_001:0617b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七聖大曼茶羅義述一卷",
        "from": "T19n1004_001:0617b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國公食邑三千戶賜紫贈司空諡大鑒正號大廣智大興善寺三藏沙門不空奉　詔譯并依釋略序爾時毘盧遮那如來。",
        "from": "T19n1004_001:0617b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於他化自在天王宮。",
        "from": "T19n1004_001:0617b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸大菩薩等。",
        "from": "T19n1004_001:0617b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此般若波羅蜜甚深理趣十七清淨句門。",
        "from": "T19n1004_001:0617b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋是十七大菩薩三摩地之句義也。",
        "from": "T19n1004_001:0617b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令能住持者疾至菩提故。",
        "from": "T19n1004_001:0617b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂演此十七聖位大曼茶羅如來與諸大士等所說密語。",
        "from": "T19n1004_001:0617b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依此修行速疾成就。",
        "from": "T19n1004_001:0617b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者為一十七聖。",
        "from": "T19n1004_001:0617b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一所謂大樂不空三昧真實金剛菩薩。",
        "from": "T19n1004_001:0617b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋表諸佛普賢之身。",
        "from": "T19n1004_001:0617b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍器世間及有情世間。",
        "from": "T19n1004_001:0617b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其無邊自在理常體寂不妄不壞故有是名也。",
        "from": "T19n1004_001:0617b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左持金剛鈴是適悅義。",
        "from": "T19n1004_001:0617b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置腰之左表大我焉。",
        "from": "T19n1004_001:0617b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右持五股金剛杵是五智義。",
        "from": "T19n1004_001:0617b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉拳向外示眾生也。",
        "from": "T19n1004_001:0617b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於曼茶羅據其中位。",
        "from": "T19n1004_001:0617b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而總其眾相。",
        "from": "T19n1004_001:0617b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除是而有一十六位焉。",
        "from": "T19n1004_001:0617b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋正覺之徑路。",
        "from": "T19n1004_001:0617b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其二所謂意生金剛菩薩。",
        "from": "T19n1004_001:0617c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大悲欲箭。",
        "from": "T19n1004_001:0617c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "害二乘心。",
        "from": "T19n1004_001:0617c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以手持是箭。",
        "from": "T19n1004_001:0617c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其欲離俱幻平等智身。",
        "from": "T19n1004_001:0617c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其三所謂髻利吉羅金剛菩薩。",
        "from": "T19n1004_001:0617c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中國之言名觸。",
        "from": "T19n1004_001:0617c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不捨眾生必令解脫故。",
        "from": "T19n1004_001:0617c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明觸性即菩提故。",
        "from": "T19n1004_001:0617c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以住抱持相。",
        "from": "T19n1004_001:0617c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其觸淨俱幻平等智身。",
        "from": "T19n1004_001:0617c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其四所謂悲愍金剛菩薩。",
        "from": "T19n1004_001:0617c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以悲愍故。",
        "from": "T19n1004_001:0617c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以愛念繩。",
        "from": "T19n1004_001:0617c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普縛眾生未至菩提。",
        "from": "T19n1004_001:0617c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不放捨。",
        "from": "T19n1004_001:0617c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如摩竭大魚吞啗所遇。",
        "from": "T19n1004_001:0617c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一入口已更無免者。",
        "from": "T19n1004_001:0617c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以持此摩竭魚幢。",
        "from": "T19n1004_001:0617c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其愛縛捨離俱幻平等智身。",
        "from": "T19n1004_001:0617c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其五所謂金剛慢菩薩。",
        "from": "T19n1004_001:0617c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無過上智。",
        "from": "T19n1004_001:0617c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令一切眾生悉證毘盧遮那如來體。",
        "from": "T19n1004_001:0617c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於世出世間皆得自在。",
        "from": "T19n1004_001:0617c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以住傲誕威儀。",
        "from": "T19n1004_001:0617c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其我無我俱幻平等智身。",
        "from": "T19n1004_001:0617c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其六所謂金剛見菩薩。",
        "from": "T19n1004_001:0617c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以寂照大慧之眼。",
        "from": "T19n1004_001:0617c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於雜染界妙淨土乃至真諦俗諦。",
        "from": "T19n1004_001:0617c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯見一切法勝義真實之諦。",
        "from": "T19n1004_001:0617c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不散不動。",
        "from": "T19n1004_001:0617c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以持意生之契。",
        "from": "T19n1004_001:0617c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其三昧之身。",
        "from": "T19n1004_001:0617c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其七所謂金剛適悅菩薩。",
        "from": "T19n1004_001:0617c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於身塵而得適悅清淨。",
        "from": "T19n1004_001:0617c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死解脫不厭不住。",
        "from": "T19n1004_001:0617c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以持觸金剛相。",
        "from": "T19n1004_001:0617c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其三昧之身。",
        "from": "T19n1004_001:0617c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其八所謂金剛貪菩薩。",
        "from": "T19n1004_001:0617c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即貪愛而得清淨故。",
        "from": "T19n1004_001:0617c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂能以貪而積集一切功德智慧。",
        "from": "T19n1004_001:0617c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾證菩提。",
        "from": "T19n1004_001:0617c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由住貪愛性故。",
        "from": "T19n1004_001:0617c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以持悲愍之契。",
        "from": "T19n1004_001:0617c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其三昧之身。",
        "from": "T19n1004_001:0617c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其九所謂金剛自在菩薩。",
        "from": "T19n1004_001:0617c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入三界自在無畏。",
        "from": "T19n1004_001:0617c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死涅槃而得大我之體。",
        "from": "T19n1004_001:0617c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以住金剛慢相。",
        "from": "T19n1004_001:0618a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其三昧之身。",
        "from": "T19n1004_001:0618a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十所謂金剛春菩薩。",
        "from": "T19n1004_001:0618a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以菩提覺花起供養雲海。",
        "from": "T19n1004_001:0618a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以方便授與眾生作功德利。",
        "from": "T19n1004_001:0618a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以花是春事。",
        "from": "T19n1004_001:0618a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以名之。",
        "from": "T19n1004_001:0618a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故亦持花以為其契。",
        "from": "T19n1004_001:0618a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十一所謂金剛雲菩薩。",
        "from": "T19n1004_001:0618a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以法澤慈雲。",
        "from": "T19n1004_001:0618a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滋潤含識。",
        "from": "T19n1004_001:0618a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以方便授諸身心使無始無明臭穢不善。",
        "from": "T19n1004_001:0618a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化成無量供養香雲。",
        "from": "T19n1004_001:0618a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以鑪煙像雲。",
        "from": "T19n1004_001:0618a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以為號。",
        "from": "T19n1004_001:0618a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故持焚香之器以為契焉。",
        "from": "T19n1004_001:0618a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十二所謂金剛秋菩薩。",
        "from": "T19n1004_001:0618a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以智燈破諸黑暗。",
        "from": "T19n1004_001:0618a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以方便授與眾生。",
        "from": "T19n1004_001:0618a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起無量光明供養雲海。",
        "from": "T19n1004_001:0618a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其空色清爽莫如秋時。",
        "from": "T19n1004_001:0618a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲表智光之體。",
        "from": "T19n1004_001:0618a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以名之。",
        "from": "T19n1004_001:0618a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故執燈明以為其契。",
        "from": "T19n1004_001:0618a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十三所謂金剛霜雪菩薩。",
        "from": "T19n1004_001:0618a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以五無漏蘊香。",
        "from": "T19n1004_001:0618a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗眾生心體。",
        "from": "T19n1004_001:0618a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅煩惱之穢熱。",
        "from": "T19n1004_001:0618a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成五分法身之香。",
        "from": "T19n1004_001:0618a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以方便授與眾生。",
        "from": "T19n1004_001:0618a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起塗香供養雲海。",
        "from": "T19n1004_001:0618a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以栴檀塗香解諸毒熱有似霜雪。",
        "from": "T19n1004_001:0618a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以名之。",
        "from": "T19n1004_001:0618a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故執塗香以為其契。",
        "from": "T19n1004_001:0618a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十四所謂金剛色菩薩。",
        "from": "T19n1004_001:0618a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以色清淨智。",
        "from": "T19n1004_001:0618a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於淨妙界起受用色身。",
        "from": "T19n1004_001:0618a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於雜染界起變化色身。",
        "from": "T19n1004_001:0618a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為攝來之事。",
        "from": "T19n1004_001:0618a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以持鉤為契。",
        "from": "T19n1004_001:0618a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十五所謂金剛聲菩薩。",
        "from": "T19n1004_001:0618a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以聲清淨智。",
        "from": "T19n1004_001:0618a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能表六十四種梵音。",
        "from": "T19n1004_001:0618a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普周法界而為引入之事。",
        "from": "T19n1004_001:0618a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故持索以為契。",
        "from": "T19n1004_001:0618a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十六所謂金剛香菩薩。",
        "from": "T19n1004_001:0618a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香清淨智。",
        "from": "T19n1004_001:0618a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發金剛界自然名稱之香。",
        "from": "T19n1004_001:0618a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入一切散動心以為止留之事。",
        "from": "T19n1004_001:0618a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以持鎖為契。",
        "from": "T19n1004_001:0618a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十七所謂金剛味菩薩。",
        "from": "T19n1004_001:0618a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以味清淨智。",
        "from": "T19n1004_001:0618a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持瑜伽三摩地無上法味。",
        "from": "T19n1004_001:0618a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為歡樂之事。",
        "from": "T19n1004_001:0618a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故持鈴為契。",
        "from": "T19n1004_001:0618a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等大菩薩十七清淨三摩地智。",
        "from": "T19n1004_001:0618b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依文廣述。",
        "from": "T19n1004_001:0618b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有無量名義體用理事成證之門。",
        "from": "T19n1004_001:0618b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今但粗舉綱目而已。",
        "from": "T19n1004_001:0618b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出金剛頂經第十三會大三昧耶真實瑜伽略鈔大意。",
        "from": "T19n1004_001:0618b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若波羅蜜多理趣經大安樂不空三昧真實金剛菩薩等一十七聖大曼茶羅義述一卷",
        "from": "T19n1004_001:0618b06_100",
        "context_with_next_sentence": false
    }
]