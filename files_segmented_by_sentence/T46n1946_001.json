[
    {
        "source_sentence": "金光明最勝懺儀",
        "from": "T46n1946_001:0961c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋傳天台教觀四明沙門知禮集",
        "from": "T46n1946_001:0961c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切恭敬。",
        "from": "T46n1946_001:0961c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮十方常住三寶一拜已胡跪執爐云。",
        "from": "T46n1946_001:0961c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願此香華雲。",
        "from": "T46n1946_001:0961c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿十方界。",
        "from": "T46n1946_001:0961c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養一切佛。",
        "from": "T46n1946_001:0961c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊法諸菩薩。",
        "from": "T46n1946_001:0961c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞緣覺眾。",
        "from": "T46n1946_001:0961c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切天仙。",
        "from": "T46n1946_001:0961c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受用作佛事　供養已一切恭敬一拜已復跪奉請云。",
        "from": "T46n1946_001:0961c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請南無本師釋迦文佛。",
        "from": "T46n1946_001:0961c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方阿閦四　佛世尊。",
        "from": "T46n1946_001:0961c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶華瑠璃寶勝佛等。",
        "from": "T46n1946_001:0961c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡金光明經中及十方三世一切諸佛三請一禮。",
        "from": "T46n1946_001:0962a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請南無大乘金光明海十二部經三請已一拜。",
        "from": "T46n1946_001:0962a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請南無信相菩薩。",
        "from": "T46n1946_001:0962a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀世音菩薩。",
        "from": "T46n1946_001:0962a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大勢至菩薩。",
        "from": "T46n1946_001:0962a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金光明菩薩。",
        "from": "T46n1946_001:0962a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金藏菩薩。",
        "from": "T46n1946_001:0962a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常悲法上盡金光明經內及十方三世一切菩薩聲聞緣覺賢聖僧三請已一拜。",
        "from": "T46n1946_001:0962a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請南無大梵尊天。",
        "from": "T46n1946_001:0962a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十三天護世四王。",
        "from": "T46n1946_001:0962a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛密跡散脂大將。",
        "from": "T46n1946_001:0962a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大辯天神。",
        "from": "T46n1946_001:0962a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩利支天。",
        "from": "T46n1946_001:0962a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韋馱天神。",
        "from": "T46n1946_001:0962a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅牢地神。",
        "from": "T46n1946_001:0962a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提樹神。",
        "from": "T46n1946_001:0962a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訶梨帝喃鬼子母等五百眷屬。",
        "from": "T46n1946_001:0962a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆是大菩薩等。",
        "from": "T46n1946_001:0962a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及此國內名山大川一切靈廟。",
        "from": "T46n1946_001:0962a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當州地分屬內鬼神。",
        "from": "T46n1946_001:0962a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所住處護伽藍神守正法者。",
        "from": "T46n1946_001:0962a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切聖眾三請已不應禮。",
        "from": "T46n1946_001:0962a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請南無第一威德成就眾事大功德天。",
        "from": "T46n1946_001:0962a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此位眾唱三請已不禮。",
        "from": "T46n1946_001:0962a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白衣須禮。",
        "from": "T46n1946_001:0962a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當合掌持呪。",
        "from": "T46n1946_001:0962a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無室利莫訶天女　怛姪他姪字徒細地夜儞也。",
        "from": "T46n1946_001:0962a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三曰並通鉢唎脯𠷈拏折囇脯布乎切。",
        "from": "T46n1946_001:0962a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𠷈力出切。",
        "from": "T46n1946_001:0962a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "折市列切。",
        "from": "T46n1946_001:0962a18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囇力計切。",
        "from": "T46n1946_001:0962a18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四並同之三曼䫂多可切　達喇設泥喇字多達切。",
        "from": "T46n1946_001:0962a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泥字去聲　莫訶毘　阿囉揭諦　三曼䫂毘曇末泥　莫訶迦哩也鉢喇底瑟侘鉢泥佗丑迦切　薩婆頞他娑彈泥頞烏割切蘇鉢喇底脯囇　痾耶娜娜乃可切　達摩多　摩訶毘俱比諦比婢必切　莫訶迷咄嚕鄔波僧呬羝鄔烏古切。",
        "from": "T46n1946_001:0962a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呬香器切。",
        "from": "T46n1946_001:0962a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羝了兮切　莫訶頡唎使頡戶結切　蘇僧近入聲哩呬羝　三曼多頗他　阿奴波喇泥莎訶七遍訖。",
        "from": "T46n1946_001:0962a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛面猶如淨滿月　　亦如千日放光明",
        "from": "T46n1946_001:0962a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目淨修廣若青蓮　　齒白齊密猶珂雪",
        "from": "T46n1946_001:0962a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛德無邊如大海　　無限妙寶積其中",
        "from": "T46n1946_001:0962b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧德水鎮常盈　　百千勝定咸充滿",
        "from": "T46n1946_001:0962b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足下輪相皆嚴飾　　轂網千輻悉齊平",
        "from": "T46n1946_001:0962b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手足縵網遍莊嚴　　猶如鵝王相具足",
        "from": "T46n1946_001:0962b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛身光耀等金山　　清淨殊特無倫匹",
        "from": "T46n1946_001:0962b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如妙高功德滿　　故我稽首佛山王",
        "from": "T46n1946_001:0962b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相好如空不可測　　逾於千日放光明",
        "from": "T46n1946_001:0962b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆如焰幻不思議　　故我稽首心無著",
        "from": "T46n1946_001:0962b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　讚已當陳述意。",
        "from": "T46n1946_001:0962b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須合掌恭敬。",
        "from": "T46n1946_001:0962b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令眾平聲三唱云。",
        "from": "T46n1946_001:0962b09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無寶華瑠璃佛。",
        "from": "T46n1946_001:0962b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無大乘金光明經。",
        "from": "T46n1946_001:0962b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無第一威德成就眾事大功德天如是三稱已。",
        "from": "T46n1946_001:0962b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次處奉供養。",
        "from": "T46n1946_001:0962b11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專想面對。",
        "from": "T46n1946_001:0962b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後陳辭句。",
        "from": "T46n1946_001:0962b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘時除去。",
        "from": "T46n1946_001:0962b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食并淨潔如法。",
        "from": "T46n1946_001:0962b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復持散擲等語。",
        "from": "T46n1946_001:0962b12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但云香華至同圓種智而止。",
        "from": "T46n1946_001:0962b12_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便即禮佛。",
        "from": "T46n1946_001:0962b12_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今我道場敷設供養。",
        "from": "T46n1946_001:0962b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然種種燈。",
        "from": "T46n1946_001:0962b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒種種香。",
        "from": "T46n1946_001:0962b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉種種飲食。",
        "from": "T46n1946_001:0962b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨潔如法。",
        "from": "T46n1946_001:0962b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭持奉供諸佛世尊。",
        "from": "T46n1946_001:0962b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘經典。",
        "from": "T46n1946_001:0962b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩賢聖一切三寶。",
        "from": "T46n1946_001:0962b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復別具香華飲食。",
        "from": "T46n1946_001:0962b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻功德大天大辯。",
        "from": "T46n1946_001:0962b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四王梵釋。",
        "from": "T46n1946_001:0962b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍八部聖眾。",
        "from": "T46n1946_001:0962b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復持飲食散擲餘方。",
        "from": "T46n1946_001:0962b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施諸神等。",
        "from": "T46n1946_001:0962b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願三寶天仙。",
        "from": "T46n1946_001:0962b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憐愍於我及諸眾生。",
        "from": "T46n1946_001:0962b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受此供養。",
        "from": "T46n1946_001:0962b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金光明力及諸佛威神。",
        "from": "T46n1946_001:0962b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一念間顯現十方一切佛剎。",
        "from": "T46n1946_001:0962b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲遍滿如雨普洽。",
        "from": "T46n1946_001:0962b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣作佛事等熏眾生。",
        "from": "T46n1946_001:0962b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心同圓種智此亦應隨意所陳。",
        "from": "T46n1946_001:0962b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未必專誦此語。",
        "from": "T46n1946_001:0962b21_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是語已。",
        "from": "T46n1946_001:0962b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當持飲食至道場外淨處。",
        "from": "T46n1946_001:0962b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布散四方。",
        "from": "T46n1946_001:0962b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作是言。",
        "from": "T46n1946_001:0962b22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今依教供養大乘三寶及吉祥大天。",
        "from": "T46n1946_001:0962b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持此種種飲食。",
        "from": "T46n1946_001:0962b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散灑諸方遍施諸神。",
        "from": "T46n1946_001:0962b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸神明威權自在。",
        "from": "T46n1946_001:0962b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念普集各受法食。",
        "from": "T46n1946_001:0962b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充足無乏身力勇銳。",
        "from": "T46n1946_001:0962b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守護堅強知我所求。",
        "from": "T46n1946_001:0962b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願當相與迴此福利普潤含生。",
        "from": "T46n1946_001:0962b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果報自然常受勝樂作是呪願竟。",
        "from": "T46n1946_001:0962b27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便以食散擲四方。",
        "from": "T46n1946_001:0962b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想無量鬼神悉來受食。",
        "from": "T46n1946_001:0962b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時或誦前呪。",
        "from": "T46n1946_001:0962b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或但云南無室利摩訶天女。",
        "from": "T46n1946_001:0962b28_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以食盡為度。",
        "from": "T46n1946_001:0962b28_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散灑畢迴道場禮佛。",
        "from": "T46n1946_001:0962b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮本師釋迦牟尼佛。",
        "from": "T46n1946_001:0962c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮東方阿閦佛。",
        "from": "T46n1946_001:0962c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮南方寶相佛。",
        "from": "T46n1946_001:0962c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮西方無量壽佛。",
        "from": "T46n1946_001:0962c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮北方微妙聲佛。",
        "from": "T46n1946_001:0962c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮寶華瑠璃佛。",
        "from": "T46n1946_001:0962c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮寶勝佛。",
        "from": "T46n1946_001:0962c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮無垢熾寶光明王相佛。",
        "from": "T46n1946_001:0962c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮金焰光明佛。",
        "from": "T46n1946_001:0962c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮金百光明照藏佛。",
        "from": "T46n1946_001:0962c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮金山寶蓋佛。",
        "from": "T46n1946_001:0962c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮金華焰光相佛。",
        "from": "T46n1946_001:0962c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮大炬佛。",
        "from": "T46n1946_001:0962c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮寶相佛。",
        "from": "T46n1946_001:0962c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮盡金光明經中及十方三世一切諸佛。",
        "from": "T46n1946_001:0962c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮大乘金光明海十二部經三禮。",
        "from": "T46n1946_001:0962c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮信相菩薩摩訶薩。",
        "from": "T46n1946_001:0962c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮觀世音菩薩摩訶薩。",
        "from": "T46n1946_001:0962c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮大勢至菩薩摩訶薩。",
        "from": "T46n1946_001:0962c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮金光明菩薩摩訶薩。",
        "from": "T46n1946_001:0962c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮金藏菩薩摩訶薩。",
        "from": "T46n1946_001:0962c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮常悲菩薩摩訶薩。",
        "from": "T46n1946_001:0962c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮法上菩薩摩訶薩。",
        "from": "T46n1946_001:0962c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮盡金光明經內及十方三世一切菩薩摩訶薩。",
        "from": "T46n1946_001:0962c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮舍利弗等聲聞緣覺賢聖僧。",
        "from": "T46n1946_001:0962c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為法界一切眾生。",
        "from": "T46n1946_001:0962c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉願斷除三障。",
        "from": "T46n1946_001:0962c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命懺悔一拜運想逆順十心。",
        "from": "T46n1946_001:0962c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我比丘某甲歸命頂禮現在十方一切諸佛。",
        "from": "T46n1946_001:0963a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已得阿耨多羅三藐三菩提者。",
        "from": "T46n1946_001:0963a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉妙法輪。",
        "from": "T46n1946_001:0963a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持照法輪。",
        "from": "T46n1946_001:0963a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨大法雨。",
        "from": "T46n1946_001:0963a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擊大法鼓。",
        "from": "T46n1946_001:0963a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吹大法螺。",
        "from": "T46n1946_001:0963a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建大法幢。",
        "from": "T46n1946_001:0963a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秉大法炬。",
        "from": "T46n1946_001:0963a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利益安樂諸眾生故。",
        "from": "T46n1946_001:0963a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常行法施誘進群迷。",
        "from": "T46n1946_001:0963a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得大果證常樂故。",
        "from": "T46n1946_001:0963a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等諸佛世尊以身語意。",
        "from": "T46n1946_001:0963a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首歸誠。",
        "from": "T46n1946_001:0963a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心禮敬彼諸世尊。",
        "from": "T46n1946_001:0963a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以真實慧以真實眼。",
        "from": "T46n1946_001:0963a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實證明真實平等。",
        "from": "T46n1946_001:0963a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉知悉見一切眾生善惡之業。",
        "from": "T46n1946_001:0963a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從無始生死以來。",
        "from": "T46n1946_001:0963a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨惡流轉。",
        "from": "T46n1946_001:0963a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共諸眾生造業障罪。",
        "from": "T46n1946_001:0963a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為貪嗔癡之所纏縛。",
        "from": "T46n1946_001:0963a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未識佛時。",
        "from": "T46n1946_001:0963a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未識法時。",
        "from": "T46n1946_001:0963a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未識僧時。",
        "from": "T46n1946_001:0963a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未識善惡。",
        "from": "T46n1946_001:0963a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由身語意造無間罪。",
        "from": "T46n1946_001:0963a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡心出佛身血。",
        "from": "T46n1946_001:0963a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誹謗正法。",
        "from": "T46n1946_001:0963a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破和合僧。",
        "from": "T46n1946_001:0963a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺阿羅漢。",
        "from": "T46n1946_001:0963a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺害父母。",
        "from": "T46n1946_001:0963a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身三語四意三種行。",
        "from": "T46n1946_001:0963a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造十惡業。",
        "from": "T46n1946_001:0963a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自作教他。",
        "from": "T46n1946_001:0963a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見作隨喜。",
        "from": "T46n1946_001:0963a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸善人橫生毀謗。",
        "from": "T46n1946_001:0963a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斗秤欺誑以偽為真。",
        "from": "T46n1946_001:0963a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不淨飲食施與一切。",
        "from": "T46n1946_001:0963a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於六道中所有父母。",
        "from": "T46n1946_001:0963a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更相惱害。",
        "from": "T46n1946_001:0963a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或盜窣堵波物。",
        "from": "T46n1946_001:0963a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方僧物。",
        "from": "T46n1946_001:0963a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現前僧物。",
        "from": "T46n1946_001:0963a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在而用。",
        "from": "T46n1946_001:0963a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊法律不樂奉行。",
        "from": "T46n1946_001:0963a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師長教示不相隨順。",
        "from": "T46n1946_001:0963a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見行聲聞獨覺大乘行者。",
        "from": "T46n1946_001:0963a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜生罵辱。",
        "from": "T46n1946_001:0963a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸行人心生悔惱。",
        "from": "T46n1946_001:0963a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見有勝己便懷嫉妬。",
        "from": "T46n1946_001:0963a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法施財施常生慳惜。",
        "from": "T46n1946_001:0963a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明所覆邪見惑心。",
        "from": "T46n1946_001:0963a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不修善因令惡增長。",
        "from": "T46n1946_001:0963a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸佛所而起誹謗。",
        "from": "T46n1946_001:0963a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法說非法。",
        "from": "T46n1946_001:0963a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非法說法。",
        "from": "T46n1946_001:0963a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾罪佛以真實慧真實眼。",
        "from": "T46n1946_001:0963a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實證明。",
        "from": "T46n1946_001:0963a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實平等悉知悉見。",
        "from": "T46n1946_001:0963a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今歸命對諸佛前。",
        "from": "T46n1946_001:0963a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉發露不敢覆藏。",
        "from": "T46n1946_001:0963a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未作之罪更不復作。",
        "from": "T46n1946_001:0963a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已作之罪今皆懺悔。",
        "from": "T46n1946_001:0963a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作業障應墮惡道地獄旁生餓鬼之中。",
        "from": "T46n1946_001:0963a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿蘇羅眾及八難處。",
        "from": "T46n1946_001:0963a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我此生所有業障皆得消滅。",
        "from": "T46n1946_001:0963a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有惡報未來不受。",
        "from": "T46n1946_001:0963a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如過去諸大菩薩修菩提行。",
        "from": "T46n1946_001:0963a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有業障悉已懺悔。",
        "from": "T46n1946_001:0963a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之業障今亦懺悔。",
        "from": "T46n1946_001:0963b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉發露不敢覆藏。",
        "from": "T46n1946_001:0963b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已作之罪願得除滅。",
        "from": "T46n1946_001:0963b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來之惡更不敢造。",
        "from": "T46n1946_001:0963b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如未來諸大菩薩修菩提行。",
        "from": "T46n1946_001:0963b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有業障悉已懺悔。",
        "from": "T46n1946_001:0963b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之業障今亦懺悔。",
        "from": "T46n1946_001:0963b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉發露不敢覆藏。",
        "from": "T46n1946_001:0963b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已作之罪願得除滅。",
        "from": "T46n1946_001:0963b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來之惡更不敢造。",
        "from": "T46n1946_001:0963b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如現在十方世界諸大菩薩修菩提行。",
        "from": "T46n1946_001:0963b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有業障悉已懺悔。",
        "from": "T46n1946_001:0963b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之業障今亦懺悔。",
        "from": "T46n1946_001:0963b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉發露不敢覆藏。",
        "from": "T46n1946_001:0963b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已作之罪願得除滅。",
        "from": "T46n1946_001:0963b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來之惡更不敢造懺悔已歸命禮三寶。",
        "from": "T46n1946_001:0963b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我比丘某甲歸命頂禮十方一切諸佛世尊。",
        "from": "T46n1946_001:0963b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初成正覺未轉法輪。",
        "from": "T46n1946_001:0963b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲捨應身入涅槃者。",
        "from": "T46n1946_001:0963b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆頂禮是諸世尊。",
        "from": "T46n1946_001:0963b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸轉法輪請久住世。",
        "from": "T46n1946_001:0963b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度脫安樂一切眾生勸請已歸命禮三寶。",
        "from": "T46n1946_001:0963b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我比丘某甲歸命頂禮十方一切諸佛世尊。",
        "from": "T46n1946_001:0963b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今隨喜一切眾生三業所修施戒心慧。",
        "from": "T46n1946_001:0963b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二乘菩薩賢聖善根。",
        "from": "T46n1946_001:0963b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛證妙菩提法。",
        "from": "T46n1946_001:0963b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施一切所有功德。",
        "from": "T46n1946_001:0963b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆至誠隨喜讚歎隨喜已歸命禮三寶。",
        "from": "T46n1946_001:0963b17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我比丘某甲歸命頂禮十方一切諸佛世尊。",
        "from": "T46n1946_001:0963b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願作證知。",
        "from": "T46n1946_001:0963b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從無始至於今日。",
        "from": "T46n1946_001:0963b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業所修一切諸善。",
        "from": "T46n1946_001:0963b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施戒善慧。",
        "from": "T46n1946_001:0963b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至懺悔勸請隨喜。",
        "from": "T46n1946_001:0963b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝取現前。",
        "from": "T46n1946_001:0963b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴施法界一切眾生。",
        "from": "T46n1946_001:0963b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同證菩提如諸佛等迴向已歸命禮三寶。",
        "from": "T46n1946_001:0963b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我比丘某甲歸命頂禮十方一切諸佛世尊。",
        "from": "T46n1946_001:0963b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證我微誠現前所願。",
        "from": "T46n1946_001:0963b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸天八部增長威神。",
        "from": "T46n1946_001:0963b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常來護持我此國土。",
        "from": "T46n1946_001:0963b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風祥雨順穀果豐登。",
        "from": "T46n1946_001:0963b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖帝仁王慈臨無際。",
        "from": "T46n1946_001:0963b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群臣官屬常守尊榮。",
        "from": "T46n1946_001:0963b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬姓四民永安富樂。",
        "from": "T46n1946_001:0963b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法檀越父母師僧。",
        "from": "T46n1946_001:0963b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷世冤親法界含識。",
        "from": "T46n1946_001:0963b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸生正信發菩提心。",
        "from": "T46n1946_001:0963b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六度齊修二嚴等備。",
        "from": "T46n1946_001:0963b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復願我等眾聖冥加。",
        "from": "T46n1946_001:0963b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常值大乘及善知識開我佛慧。",
        "from": "T46n1946_001:0963c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願行現前荷負流通。",
        "from": "T46n1946_001:0963c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世佛法誘化一切。",
        "from": "T46n1946_001:0963c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然無盡燈普會眾生同歸祕藏發願已歸命禮三寶。",
        "from": "T46n1946_001:0963c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無佛。",
        "from": "T46n1946_001:0963c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無法。",
        "from": "T46n1946_001:0963c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無僧。",
        "from": "T46n1946_001:0963c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無本師釋迦牟尼佛。",
        "from": "T46n1946_001:0963c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無四方四佛。",
        "from": "T46n1946_001:0963c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無寶華瑠璃佛。",
        "from": "T46n1946_001:0963c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無大乘金光明經三稱南無信相菩薩。",
        "from": "T46n1946_001:0963c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無金光明菩薩。",
        "from": "T46n1946_001:0963c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無金藏菩薩。",
        "from": "T46n1946_001:0963c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無常悲菩薩。",
        "from": "T46n1946_001:0963c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無法上菩薩南無第一威德成就眾事大功德天。",
        "from": "T46n1946_001:0963c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自歸於佛。",
        "from": "T46n1946_001:0963c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當願眾生體解大道發無上心。",
        "from": "T46n1946_001:0963c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自歸於法。",
        "from": "T46n1946_001:0963c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當願眾生深入經藏智慧如海。",
        "from": "T46n1946_001:0963c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自歸於僧。",
        "from": "T46n1946_001:0963c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當願眾生統理大眾一切無礙。",
        "from": "T46n1946_001:0963c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和南聖眾。",
        "from": "T46n1946_001:0963c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金光明最勝懺儀",
        "from": "T46n1946_001:0963c13_100",
        "context_with_next_sentence": false
    }
]