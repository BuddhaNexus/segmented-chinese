[
    {
        "source_sentence": "2父子合集經卷第十四",
        "from": "T11n0320_014:0958a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T11n0320_014:0958a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚卿宣梵大師賜紫",
        "from": "T11n0320_014:0958a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門臣日稱等奉　詔譯淨居天說偈讚佛品之二爾時善稱讚天子而說偈言：",
        "from": "T11n0320_014:0958a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛超三有海，　　能化彼難化，",
        "from": "T11n0320_014:0958a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故於世間，　　得稱無所畏。",
        "from": "T11n0320_014:0958a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時達真諦天子而說偈言：",
        "from": "T11n0320_014:0958a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「成就一切智，　　滅除諸惑業，",
        "from": "T11n0320_014:0958a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令盡無遺餘，　　是名大寂靜。",
        "from": "T11n0320_014:0958a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時法幢天子而說偈言：",
        "from": "T11n0320_014:0958a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「建高勝法幢，　　摧堅固我慢，",
        "from": "T11n0320_014:0958a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量勇健力，　　示眾生正道。",
        "from": "T11n0320_014:0958a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時法海天子而說偈言：",
        "from": "T11n0320_014:0958a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「牟尼說諸法，　　為大法寶藏，",
        "from": "T11n0320_014:0958a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開導彼群迷，　　令至安隱處。",
        "from": "T11n0320_014:0958a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時法衣天子而說偈言：",
        "from": "T11n0320_014:0958a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛子住大法，　　其心無厭足，",
        "from": "T11n0320_014:0958b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安忍離諸怖，　　故能師子吼。",
        "from": "T11n0320_014:0958b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時求法義天子而說偈言：",
        "from": "T11n0320_014:0958b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛子善了知，　　當勤求正法，",
        "from": "T11n0320_014:0958b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已如教行，　　速得菩提道。",
        "from": "T11n0320_014:0958b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時渴仰法天子而說偈言：",
        "from": "T11n0320_014:0958b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「無量百千萬，　　俱胝有情眾，",
        "from": "T11n0320_014:0958b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希聞佛音聲，　　志固常精進。",
        "from": "T11n0320_014:0958b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時勇法天子而說偈言：",
        "from": "T11n0320_014:0958b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「具廣大辯才，　　摧滅諸異論，",
        "from": "T11n0320_014:0958b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂修殊勝行，　　得最上菩提。",
        "from": "T11n0320_014:0958b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時持法天子而說偈言：",
        "from": "T11n0320_014:0958b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛說第一法，　　甚深極難了，",
        "from": "T11n0320_014:0958b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印勝義皆空，　　令得寂靜道。",
        "from": "T11n0320_014:0958b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時樂勇施天子而說偈言：",
        "from": "T11n0320_014:0958b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛子善行施，　　捐捨己身命，",
        "from": "T11n0320_014:0958b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣故，　　得成最正覺。",
        "from": "T11n0320_014:0958b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時離染慧天子而說偈言：",
        "from": "T11n0320_014:0958b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「堅固持淨戒，　　其心無所畏，",
        "from": "T11n0320_014:0958b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛正法音，　　頂受無忘失。",
        "from": "T11n0320_014:0958b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時無異緣天子而說偈言：",
        "from": "T11n0320_014:0958b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「聖主法中王，　　善巧說諸法，",
        "from": "T11n0320_014:0958b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求二乘果，　　勤修無上道。",
        "from": "T11n0320_014:0958b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時近住天子而說偈言：",
        "from": "T11n0320_014:0958b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世雄二足尊，　　為眾生出現，",
        "from": "T11n0320_014:0958b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別說三乘，　　究竟唯佛智。",
        "from": "T11n0320_014:0958b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時成就辯才天子而說偈言：",
        "from": "T11n0320_014:0958b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛名遍十方，　　辯才無限礙，",
        "from": "T11n0320_014:0958b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸以清淨心，　　於所說隨喜。",
        "from": "T11n0320_014:0958b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時各各成就辯才天子而說偈言：",
        "from": "T11n0320_014:0958c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若人無辯才，　　從佛所求願，",
        "from": "T11n0320_014:0958c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法除諸怖，　　聞者不毀呰。",
        "from": "T11n0320_014:0958c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時常喜天子而說偈言：",
        "from": "T11n0320_014:0958c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛子住忍力，　　為呵毀無恚，",
        "from": "T11n0320_014:0958c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志求大菩提，　　常喜無怯弱。",
        "from": "T11n0320_014:0958c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時離二乘天子而說偈言：",
        "from": "T11n0320_014:0958c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「為如來長子，　　不樂下劣乘，",
        "from": "T11n0320_014:0958c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聞佛音聲，　　唯趣無上道。",
        "from": "T11n0320_014:0958c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時無能勝天子而說偈言：",
        "from": "T11n0320_014:0958c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「勇猛大精進，　　不怖諸煩惱，",
        "from": "T11n0320_014:0958c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨緣覺聲聞，　　誓求無上慧。",
        "from": "T11n0320_014:0958c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時相續善法天子而說偈言：",
        "from": "T11n0320_014:0958c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「樂修淨分法，　　而無有間斷，",
        "from": "T11n0320_014:0958c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牟尼大導師，　　知彼所依處。",
        "from": "T11n0320_014:0958c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時善說法天子而說偈言：",
        "from": "T11n0320_014:0958c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「攝受彼正法，　　如來所印可，",
        "from": "T11n0320_014:0958c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住堅固精進，　　如滿月無減。",
        "from": "T11n0320_014:0958c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時善法性天子而說偈言：",
        "from": "T11n0320_014:0958c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「法自性潔白，　　為客塵所覆，",
        "from": "T11n0320_014:0958c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由染污心，　　如來能現證。",
        "from": "T11n0320_014:0958c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時達正理天子而說偈言：",
        "from": "T11n0320_014:0958c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「法性本無染，　　黑白不共住，",
        "from": "T11n0320_014:0958c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此正理相應，　　如來之所說。",
        "from": "T11n0320_014:0958c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時分別善惡天子而說偈言：",
        "from": "T11n0320_014:0958c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「一切不善法，　　善力能摧滅，",
        "from": "T11n0320_014:0958c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若惡法增多，　　違損於白業。",
        "from": "T11n0320_014:0958c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時入正解天子而說偈言：",
        "from": "T11n0320_014:0958c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「由彼染污行，　　白法不增長，",
        "from": "T11n0320_014:0958c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定為損害緣，　　此如來所說。",
        "from": "T11n0320_014:0959a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時求解脫天子而說偈言：",
        "from": "T11n0320_014:0959a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「染污力強盛，　　心不希解脫，",
        "from": "T11n0320_014:0959a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱覆一切智，　　於此善決擇。",
        "from": "T11n0320_014:0959a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時明心天子而說偈言：",
        "from": "T11n0320_014:0959a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「心若脫諸欲，　　惡業不復生，",
        "from": "T11n0320_014:0959a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來能證知，　　為眾生演說。",
        "from": "T11n0320_014:0959a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時見煩惱天子而說偈言：",
        "from": "T11n0320_014:0959a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若不了正法，　　不知染污行，",
        "from": "T11n0320_014:0959a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常違背佛言，　　去聖道彌遠。",
        "from": "T11n0320_014:0959a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時見罪行天子而說偈言：",
        "from": "T11n0320_014:0959a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若不造諸惡，　　善業則增益，",
        "from": "T11n0320_014:0959a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故彼智人，　　樂解脫安樂。",
        "from": "T11n0320_014:0959a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時信力天子而說偈言：",
        "from": "T11n0320_014:0959a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「離貪恚癡行，　　則能越惡道，",
        "from": "T11n0320_014:0959a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來出世間，　　常如是教誨。",
        "from": "T11n0320_014:0959a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時知善惡天子而說偈言：",
        "from": "T11n0320_014:0959a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若於染淨法，　　心不能分別，",
        "from": "T11n0320_014:0959a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說如是人，　　為極愚癡者。",
        "from": "T11n0320_014:0959a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時解脫行天子而說偈言：",
        "from": "T11n0320_014:0959a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「隨順佛教誨，　　棄捨諸不善，",
        "from": "T11n0320_014:0959a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人於聖道，　　決定得成就。",
        "from": "T11n0320_014:0959a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時解脫現前天子而說偈言：",
        "from": "T11n0320_014:0959a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若棄諸惡法，　　白業則現前，",
        "from": "T11n0320_014:0959a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精勤無退修，　　弊魔不得便。",
        "from": "T11n0320_014:0959a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時順正理天子而說偈言：",
        "from": "T11n0320_014:0959a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸佛所說法，　　利樂於群生，",
        "from": "T11n0320_014:0959a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令遠離非處，　　不隨彼勸請。",
        "from": "T11n0320_014:0959a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時吉祥無畏天子而說偈言：",
        "from": "T11n0320_014:0959a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「不淨觀治貪，　　為相應正行，",
        "from": "T11n0320_014:0959b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼貪既除已，　　當令障轉遠。",
        "from": "T11n0320_014:0959b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時進趣勝慧天子而說偈言：",
        "from": "T11n0320_014:0959b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「慈心觀治瞋，　　彼瞋得解脫，",
        "from": "T11n0320_014:0959b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設復遇深怨，　　而不生少怖。",
        "from": "T11n0320_014:0959b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時淨眼天子而說偈言：",
        "from": "T11n0320_014:0959b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「淨慧斷癡惑，　　是所對治法，",
        "from": "T11n0320_014:0959b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼癡已遣除，　　不隨他教勅。",
        "from": "T11n0320_014:0959b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時破疑惑天子而說偈言：",
        "from": "T11n0320_014:0959b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「住正念思惟，　　能離諸疑惑，",
        "from": "T11n0320_014:0959b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設遇邪師友，　　依法善調伏。",
        "from": "T11n0320_014:0959b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時達無相天子而說偈言：",
        "from": "T11n0320_014:0959b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來說空法，　　依空善安住，",
        "from": "T11n0320_014:0959b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既達於正理，　　此不由他悟。",
        "from": "T11n0320_014:0959b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時除我慢天子而說偈言：",
        "from": "T11n0320_014:0959b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「了自他我慢，　　高舉何所得，",
        "from": "T11n0320_014:0959b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與正行相應，　　皆悉令除斷。",
        "from": "T11n0320_014:0959b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時寂意天子而說偈言：",
        "from": "T11n0320_014:0959b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「永斷諸疑惑，　　深心常寂靜，",
        "from": "T11n0320_014:0959b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱不復生，　　安隱而得度。",
        "from": "T11n0320_014:0959b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時觀照天子而說偈言：",
        "from": "T11n0320_014:0959b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「了知道非道，　　依淨而離染，",
        "from": "T11n0320_014:0959b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順諸佛言，　　除怖得解脫。",
        "from": "T11n0320_014:0959b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時了世俗天子而說偈言：",
        "from": "T11n0320_014:0959b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世俗唯假名，　　能起對治道；",
        "from": "T11n0320_014:0959b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知彼世尊，　　亦假名施設。",
        "from": "T11n0320_014:0959b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時身威儀天子而說偈言：",
        "from": "T11n0320_014:0959b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「以智為前導，　　身業隨法行，",
        "from": "T11n0320_014:0959b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利樂諸有情，　　得成一切智。",
        "from": "T11n0320_014:0959b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時淨身業天子而說偈言：",
        "from": "T11n0320_014:0959c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛身業清淨，　　所作無錯謬，",
        "from": "T11n0320_014:0959c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憐愍諸眾生，　　我今歸命禮。",
        "from": "T11n0320_014:0959c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時身業決定天子而說偈言：",
        "from": "T11n0320_014:0959c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「身業善決擇，　　方便利群品，",
        "from": "T11n0320_014:0959c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信禮調御師，　　為世照明者。",
        "from": "T11n0320_014:0959c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時善觀身天子而說偈言：",
        "from": "T11n0320_014:0959c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善觀察身業，　　具清淨相好，",
        "from": "T11n0320_014:0959c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為無上丈夫，　　能與一切樂。",
        "from": "T11n0320_014:0959c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時成就語業天子而說偈言：",
        "from": "T11n0320_014:0959c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「遠離彼惡言，　　具美妙功德，",
        "from": "T11n0320_014:0959c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住正念思惟，　　是如來所說。",
        "from": "T11n0320_014:0959c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時應辯天子而說偈言：",
        "from": "T11n0320_014:0959c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來梵音聲，　　世間咸尊重，",
        "from": "T11n0320_014:0959c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善察彼時機，　　非義利不說。",
        "from": "T11n0320_014:0959c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時成就義利天子而說偈言：",
        "from": "T11n0320_014:0959c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「遠離不饒益，　　與相應安樂，",
        "from": "T11n0320_014:0959c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不壞於果報，　　是先佛所說。",
        "from": "T11n0320_014:0959c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時不相違天子而說偈言：",
        "from": "T11n0320_014:0959c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「未嘗邪活命，　　求利而妄語，",
        "from": "T11n0320_014:0959c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故佛大名聞，　　世所不能壞。",
        "from": "T11n0320_014:0959c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時實語天子而說偈言：",
        "from": "T11n0320_014:0959c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛出於世間，　　所說皆真實，",
        "from": "T11n0320_014:0959c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故諸天人，　　咸樂聞妙法。",
        "from": "T11n0320_014:0959c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時了實際天子而說偈言：",
        "from": "T11n0320_014:0959c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛以實語故，　　得成最正覺，",
        "from": "T11n0320_014:0959c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了緣生諸法，　　名正遍知者。",
        "from": "T11n0320_014:0959c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時超緣生天子而說偈言：",
        "from": "T11n0320_014:0959c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有為諸法，　　及諸法實性，",
        "from": "T11n0320_014:0959c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牟尼法中王，　　如理悉知見。",
        "from": "T11n0320_014:0960a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時決定行天子而說偈言：",
        "from": "T11n0320_014:0960a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「於自他所作，　　身語意業行，",
        "from": "T11n0320_014:0960a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛以清淨智，　　悉能分別說。",
        "from": "T11n0320_014:0960a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時定意天子而說偈言：",
        "from": "T11n0320_014:0960a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛以清淨意，　　六返觀眾生，",
        "from": "T11n0320_014:0960a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命救世尊，　　大悲無與等。",
        "from": "T11n0320_014:0960a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時善伺察天子而說偈言：",
        "from": "T11n0320_014:0960a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來有所作，　　威儀無缺減，",
        "from": "T11n0320_014:0960a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲智常相應，　　愍念於三有。",
        "from": "T11n0320_014:0960a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時覺意天子而說偈言：",
        "from": "T11n0320_014:0960a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛心所緣處，　　身語悉調柔，",
        "from": "T11n0320_014:0960a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸大眾中，　　未嘗有錯謬。",
        "from": "T11n0320_014:0960a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時明了意天子而說偈言：",
        "from": "T11n0320_014:0960a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛以意為地，　　大悲觀眾生，",
        "from": "T11n0320_014:0960a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知法自性空，　　方便令開悟。",
        "from": "T11n0320_014:0960a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時過去善巧天子而說偈言：",
        "from": "T11n0320_014:0960a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若人於往昔，　　所修諸行業，",
        "from": "T11n0320_014:0960a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施戒忍進禪，　　如來悉明了。",
        "from": "T11n0320_014:0960a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時觀察過去天子而說偈言：",
        "from": "T11n0320_014:0960a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「宿植諸德本，　　承事多億佛，",
        "from": "T11n0320_014:0960a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今滿彼昔心，　　獲得菩提果。",
        "from": "T11n0320_014:0960a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時具足相應行天子而說偈言：",
        "from": "T11n0320_014:0960a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛於無量劫，　　隨處修勝行，",
        "from": "T11n0320_014:0960a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念常相應，　　不捨菩提故。",
        "from": "T11n0320_014:0960a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時觀察先行天子而說偈言：",
        "from": "T11n0320_014:0960a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「親近諸如來，　　修習善諮問，",
        "from": "T11n0320_014:0960a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂住三摩地，　　出生種種法。",
        "from": "T11n0320_014:0960a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時本行相應天子而說偈言：",
        "from": "T11n0320_014:0960a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「過去諸佛所，　　請問如教行，",
        "from": "T11n0320_014:0960b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三摩地門，　　觀察無疲倦。",
        "from": "T11n0320_014:0960b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時知宿住天子而說偈言：",
        "from": "T11n0320_014:0960b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「生死多過失，　　應作不應作，",
        "from": "T11n0320_014:0960b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來了知已，　　為說解脫法。",
        "from": "T11n0320_014:0960b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時觀先業行天子而說偈言：",
        "from": "T11n0320_014:0960b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「昔同造諸惡，　　染污業相似，",
        "from": "T11n0320_014:0960b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或迭相食噉，　　或與之遊戲。",
        "from": "T11n0320_014:0960b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時了前際天子而說偈言：",
        "from": "T11n0320_014:0960b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來出世間，　　以禪定智力，",
        "from": "T11n0320_014:0960b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能知過去世，　　諸趣無有礙。",
        "from": "T11n0320_014:0960b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時知後際天子而說偈言：",
        "from": "T11n0320_014:0960b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛知未來世，　　智慧無障礙，",
        "from": "T11n0320_014:0960b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此歿及彼生，　　業報亦復爾。",
        "from": "T11n0320_014:0960b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時知後際境界天子而說偈言：",
        "from": "T11n0320_014:0960b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來知後際，　　智力無限礙，",
        "from": "T11n0320_014:0960b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生所行行，　　隨業受其報。",
        "from": "T11n0320_014:0960b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時離輪迴天子而說偈言：",
        "from": "T11n0320_014:0960b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來大勇猛，　　成就無上慧，",
        "from": "T11n0320_014:0960b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三有不著，　　住最勝境界。",
        "from": "T11n0320_014:0960b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時了世俗天子而說偈言：",
        "from": "T11n0320_014:0960b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「眾生所歸趣，　　起種種憶想，",
        "from": "T11n0320_014:0960b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但唯假名字，　　此如來所說。",
        "from": "T11n0320_014:0960b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時觀現在天子而說偈言：",
        "from": "T11n0320_014:0960b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「現在勇猛尊，　　智力無能壞，",
        "from": "T11n0320_014:0960b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河沙諸佛土，　　分別無限礙。",
        "from": "T11n0320_014:0960b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時住無畏天子而說偈言：",
        "from": "T11n0320_014:0960b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「聖主法中王，　　照三世平等，",
        "from": "T11n0320_014:0960b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法無自性，　　愚夫不能了。",
        "from": "T11n0320_014:0960b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時智無著天子而說偈言：",
        "from": "T11n0320_014:0960c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來善調伏，　　三世無所住，",
        "from": "T11n0320_014:0960c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法離自性，　　一切無所得。",
        "from": "T11n0320_014:0960c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時明三世慧天子而說偈言：",
        "from": "T11n0320_014:0960c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「了過未無體，　　蘊起倏歸滅，",
        "from": "T11n0320_014:0960c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是輪迴相，　　牟尼之所說。",
        "from": "T11n0320_014:0960c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時意無著天子而說偈言：",
        "from": "T11n0320_014:0960c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸法皆幻化，　　如陽焰谷響，",
        "from": "T11n0320_014:0960c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情及世間，　　自性非真實。",
        "from": "T11n0320_014:0960c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時喜三世天子而說偈言：",
        "from": "T11n0320_014:0960c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來慧無等，　　能了知三世，",
        "from": "T11n0320_014:0960c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根自性空，　　一切皆如幻。",
        "from": "T11n0320_014:0960c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時樂欲行天子而說偈言：",
        "from": "T11n0320_014:0960c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來於中夜，　　示現成正覺，",
        "from": "T11n0320_014:0960c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發勤勇樂欲，　　未曾有退減。",
        "from": "T11n0320_014:0960c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時發起樂欲天子而說偈言：",
        "from": "T11n0320_014:0960c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛為世光明，　　精進無損減，",
        "from": "T11n0320_014:0960c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由彼大勇猛，　　超出成正覺。",
        "from": "T11n0320_014:0960c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時超欲想天子而說偈言：",
        "from": "T11n0320_014:0960c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛出於世間，　　極勇猛精進，",
        "from": "T11n0320_014:0960c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能超欲淤泥，　　如蓮不著水。",
        "from": "T11n0320_014:0960c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時樂欲解脫天子而說偈言：",
        "from": "T11n0320_014:0960c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來出興世，　　說法界平等，",
        "from": "T11n0320_014:0960c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯一無二相，　　故我稱讚禮。",
        "from": "T11n0320_014:0960c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時發起精進天子而說偈言：",
        "from": "T11n0320_014:0960c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來大威德，　　能警覺群品，",
        "from": "T11n0320_014:0960c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤修不懈怠，　　天魔不能壞。",
        "from": "T11n0320_014:0960c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時具正念天子而說偈言：",
        "from": "T11n0320_014:0960c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛於一切處，　　常起彼正念，",
        "from": "T11n0320_014:0960c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故成道已，　　獲得念無減。",
        "from": "T11n0320_014:0961a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時住等引天子而說偈言：",
        "from": "T11n0320_014:0961a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來常在定，　　知眾生性欲，",
        "from": "T11n0320_014:0961a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨彼所修行，　　而為說諸法。",
        "from": "T11n0320_014:0961a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時尊重正智天子而說偈言：",
        "from": "T11n0320_014:0961a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊大智海，　　邊際無限量，",
        "from": "T11n0320_014:0961a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設經百千劫，　　說之不能盡。",
        "from": "T11n0320_014:0961a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時樂解脫天子而說偈言：",
        "from": "T11n0320_014:0961a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「無能勝丈夫，　　樂最上解脫，",
        "from": "T11n0320_014:0961a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由證解脫故，　　於三有不著。",
        "from": "T11n0320_014:0961a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時相應解脫天子而說偈言：",
        "from": "T11n0320_014:0961a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「牟尼大聖主，　　具解脫知見，",
        "from": "T11n0320_014:0961a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度無盡眾生，　　真智無有減。",
        "from": "T11n0320_014:0961a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時觀往行天子而說偈言：",
        "from": "T11n0320_014:0961a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「昔於然燈佛，　　達勝義法行，",
        "from": "T11n0320_014:0961a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤修不退轉，　　證得大菩提。",
        "from": "T11n0320_014:0961a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時甚深行天子而說偈言：",
        "from": "T11n0320_014:0961a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛久離諸惡，　　非如餘有情，",
        "from": "T11n0320_014:0961a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知法自性空，　　於三際無礙。",
        "from": "T11n0320_014:0961a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時廣慧天子而說偈言：",
        "from": "T11n0320_014:0961a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛於一切智，　　心不生疑惑，",
        "from": "T11n0320_014:0961a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念常現前，　　如持油滿鉢。",
        "from": "T11n0320_014:0961a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時無散亂天子而說偈言：",
        "from": "T11n0320_014:0961a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛心常湛然，　　未曾有散亂，",
        "from": "T11n0320_014:0961a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法性本無染，　　眾生不能解。",
        "from": "T11n0320_014:0961a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時安住智天子而說偈言：",
        "from": "T11n0320_014:0961a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來不共法，　　甚深叵思議，",
        "from": "T11n0320_014:0961a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切眾生，　　未曾不擇捨。",
        "from": "T11n0320_014:0961a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時超諸有天子而說偈言：",
        "from": "T11n0320_014:0961a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛為天中仙，　　三界無倫比，",
        "from": "T11n0320_014:0961b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達一切法，　　勝智無過上。",
        "from": "T11n0320_014:0961b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時堅固不退天子而說偈言：",
        "from": "T11n0320_014:0961b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「堅勇最勝尊，　　於法無所畏，",
        "from": "T11n0320_014:0961b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺悟諸有情，　　其心悉平等。",
        "from": "T11n0320_014:0961b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」父子合集經卷第十四",
        "from": "T11n0320_014:0961b06_100",
        "context_with_next_sentence": false
    }
]