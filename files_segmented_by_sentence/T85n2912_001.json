[
    {
        "source_sentence": "佛說無常三啟經",
        "from": "T85n2912_001:1458a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□□□□□□□　　修者咸到無為岸",
        "from": "T85n2912_001:1458a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法雲法雨潤群生　　能除熱惱蠲眾病",
        "from": "T85n2912_001:1458b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難化之徒使調順　　隨機引導非強力",
        "from": "T85n2912_001:1458b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首歸依真聖眾　　八輩上人能離染",
        "from": "T85n2912_001:1458b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛智杵破邪山　　永斷無始相纏縛",
        "from": "T85n2912_001:1458b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從鹿苑至雙林　　隨佛一代弘真教",
        "from": "T85n2912_001:1458b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各稱本緣行化已　　灰身滅智證無生",
        "from": "T85n2912_001:1458b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首總敬三寶尊　　是謂正因能普濟",
        "from": "T85n2912_001:1458b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死迷愚鎮沈溺　　咸令出離至菩提",
        "from": "T85n2912_001:1458b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生者皆歸死　　容顏盡變衰　　強力病所侵",
        "from": "T85n2912_001:1458b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能免斯者　　假使妙高山　　劫盡皆散壞",
        "from": "T85n2912_001:1458b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大海深無□　　亦復皆枯竭　　大地及日月",
        "from": "T85n2912_001:1458b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時至皆歸盡　　未曾有一事　　不被無常吞",
        "from": "T85n2912_001:1458b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上生非相處　　下至轉輪王　　七寶鎮隨身",
        "from": "T85n2912_001:1458b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千子常圍繞　　如其壽命盡　　須臾不暫停",
        "from": "T85n2912_001:1458b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還漂死海中　　隨緣受眾苦　　循環三界內",
        "from": "T85n2912_001:1458b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如汲井輪　　亦如蠶作繭　　吐絲還自縛",
        "from": "T85n2912_001:1458b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上諸世尊　　獨覺聲聞眾　　尚捨無常身",
        "from": "T85n2912_001:1458b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況諸凡夫　　父母及妻子　　兄弟并眷屬",
        "from": "T85n2912_001:1458b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目觀生死隔　　云何不愁歎　　是故勸諸子",
        "from": "T85n2912_001:1458b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽真實法　　共捨無常處　　當行不死門",
        "from": "T85n2912_001:1458b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛教如甘露　　除熱得清涼　　一心應善聽",
        "from": "T85n2912_001:1458b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅諸煩惱如是我聞。",
        "from": "T85n2912_001:1458b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時薄伽梵在室羅伐城逝多林給孤獨園。",
        "from": "T85n2912_001:1458b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告諸苾芻。",
        "from": "T85n2912_001:1458b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三種法。",
        "from": "T85n2912_001:1458b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸世間。",
        "from": "T85n2912_001:1458b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不可愛。",
        "from": "T85n2912_001:1458b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不光澤。",
        "from": "T85n2912_001:1458b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不可念。",
        "from": "T85n2912_001:1458b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不稱意。",
        "from": "T85n2912_001:1458b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者為三。",
        "from": "T85n2912_001:1458b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂老病死。",
        "from": "T85n2912_001:1458b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝諸苾芻。",
        "from": "T85n2912_001:1458b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此老病死。",
        "from": "T85n2912_001:1458b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸世間。",
        "from": "T85n2912_001:1458b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實不可愛。",
        "from": "T85n2912_001:1458b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實不光澤。",
        "from": "T85n2912_001:1458b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實不可念。",
        "from": "T85n2912_001:1458b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實不稱意。",
        "from": "T85n2912_001:1458b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若老病死世間無者。",
        "from": "T85n2912_001:1458b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來應正等覺不出於世為諸眾生說所證法及調伏事。",
        "from": "T85n2912_001:1458c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故應知此老病死。",
        "from": "T85n2912_001:1458c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸世間。",
        "from": "T85n2912_001:1458c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不可愛。",
        "from": "T85n2912_001:1458c01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不光澤。",
        "from": "T85n2912_001:1458c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不可念。",
        "from": "T85n2912_001:1458c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不稱意。",
        "from": "T85n2912_001:1458c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此三事。",
        "from": "T85n2912_001:1458c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來應正等覺。",
        "from": "T85n2912_001:1458c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出現於世為諸眾生說所證法及調伏事。",
        "from": "T85n2912_001:1458c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊重說頌曰。",
        "from": "T85n2912_001:1458c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外事莊采咸歸壞　　內身衰變亦同然",
        "from": "T85n2912_001:1458c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有勝法不滅亡　　諸有智人應善察",
        "from": "T85n2912_001:1458c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此老病死皆共嫌　　形儀醜惡極可厭",
        "from": "T85n2912_001:1458c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少年容貌暫時停　　不久咸悉成枯悴",
        "from": "T85n2912_001:1458c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使壽命滿百年　　終歸不免無常逼",
        "from": "T85n2912_001:1458c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老病死苦常隨逐　　恒與眾生作無利",
        "from": "T85n2912_001:1458c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是經已。",
        "from": "T85n2912_001:1458c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸苾芻眾天龍藥叉乾達婆阿蘇洛等。",
        "from": "T85n2912_001:1458c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T85n2912_001:1458c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常求諸欲境　　不行於善事　　云何保形命",
        "from": "T85n2912_001:1458c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見死來侵　　命根氣欲盡　　支節悉分離",
        "from": "T85n2912_001:1458c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾苦與死俱　　此時徒歎恨　　兩目俱翻上",
        "from": "T85n2912_001:1458c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死刀隨業下　　意想並慞惶　　無能相救濟",
        "from": "T85n2912_001:1458c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長喘連胸急　　噎氣喉中乾　　死王催伺命",
        "from": "T85n2912_001:1458c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親屬徒相守　　諸識皆昏昧　　行入險城中",
        "from": "T85n2912_001:1458c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親知咸棄捨　　任黑繩牽去　　將至琰摩王",
        "from": "T85n2912_001:1458c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨業而受報　　勝因生善道　　惡業墮泥犁",
        "from": "T85n2912_001:1458c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明眼無過慧　　黑闇不過癡　　病不越怨家",
        "from": "T85n2912_001:1458c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大怖無過死　　有生皆必死　　造罪苦忉身",
        "from": "T85n2912_001:1458c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當勤策三業　　恒修於福智　　眷屬皆捨去",
        "from": "T85n2912_001:1458c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "財貨任他將　　但持自善根　　險道充糧食",
        "from": "T85n2912_001:1458c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如路傍樹　　暫息非久停　　車馬及妻兒",
        "from": "T85n2912_001:1458c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久皆如是　　譬如群宿鳥　　夜聚旦隨飛",
        "from": "T85n2912_001:1458c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死去別親知　　乖離亦如是　　唯有佛菩提",
        "from": "T85n2912_001:1458c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是真歸依處　　依經我略說　　智者善應思",
        "from": "T85n2912_001:1458c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天阿蘇羅藥叉等　　來聽法者應至心",
        "from": "T85n2912_001:1458c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護佛法使長存　　各各勤行世尊教",
        "from": "T85n2912_001:1459a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有聽徒來至此　　或在地上或居空",
        "from": "T85n2912_001:1459a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於人世起慈心　　日夜自身依法住",
        "from": "T85n2912_001:1459a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸世界常安隱　　無邊福智益群生",
        "from": "T85n2912_001:1459a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有罪業並銷除　　遠離眾苦歸圓寂",
        "from": "T85n2912_001:1459a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒用戒香塗瑩體　　常持定服以資身",
        "from": "T85n2912_001:1459a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提妙花遍莊嚴　　隨所住處常安樂",
        "from": "T85n2912_001:1459a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說無常三啟經一卷初後讚歎乃是尊者馬鳴取經意而集造中是正經金口所說事有三開故云三啟也",
        "from": "T85n2912_001:1459a09_100",
        "context_with_next_sentence": false
    }
]