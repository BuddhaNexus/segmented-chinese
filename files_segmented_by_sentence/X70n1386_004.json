{
    "X70n1386_004:0349b07_0": "石田和尚語錄卷第四",
    "X70n1386_004:0349b09_0": "讚佛祖",
    "X70n1386_004:0349b10_0": "出山相",
    "X70n1386_004:0349b11_0": "未出山時。",
    "X70n1386_004:0349b11_1": "四方風悄悄。",
    "X70n1386_004:0349b11_2": "纔出山來。",
    "X70n1386_004:0349b11_3": "平地洪波湧。",
    "X70n1386_004:0349b11_4": "箇般醜舉止。",
    "X70n1386_004:0349b12_5": "邈得將何用。",
    "X70n1386_004:0349b12_6": "也好長時展起。",
    "X70n1386_004:0349b12_7": "隨分爇三錢兜樓香。",
    "X70n1386_004:0349b13_8": "薰他鼻孔。",
    "X70n1386_004:0349b14_0": "徤即經行。",
    "X70n1386_004:0349b14_1": "倦即打坐。",
    "X70n1386_004:0349b14_2": "思惟四十九年。",
    "X70n1386_004:0349b14_3": "做得許多口過。",
    "X70n1386_004:0349b15_0": "開眼堂堂。",
    "X70n1386_004:0349b15_1": "只成話墮。",
    "X70n1386_004:0349b15_2": "浩浩清風樹杪來。",
    "X70n1386_004:0349b15_3": "直下知機能幾箇。",
    "X70n1386_004:0349b17_0": "觀音",
    "X70n1386_004:0349b18_0": "入正定。",
    "X70n1386_004:0349b18_1": "作正觀。",
    "X70n1386_004:0349b18_2": "眾生受苦。",
    "X70n1386_004:0349b18_3": "我心何安。",
    "X70n1386_004:0349b18_4": "隨類現身無處覔。",
    "X70n1386_004:0349b19_5": "天風卷海夜濤寒。",
    "X70n1386_004:0349b20_0": "聞聲聞無所聞。",
    "X70n1386_004:0349b20_1": "見色見非是見。",
    "X70n1386_004:0349b20_2": "燕坐盤陀。",
    "X70n1386_004:0349b20_3": "不定不亂。",
    "X70n1386_004:0349b21_0": "盡大地悉證圓通。",
    "X70n1386_004:0349b21_1": "我方滿度生悲願。",
    "X70n1386_004:0349b22_0": "觀音思惟像",
    "X70n1386_004:0349b23_0": "苦海深。",
    "X70n1386_004:0349b23_1": "悲願廣。",
    "X70n1386_004:0349b23_2": "作是思惟。",
    "X70n1386_004:0349b23_3": "云何方便。",
    "X70n1386_004:0349b23_4": "普使群生登彼岸。",
    "X70n1386_004:0349c01_0": "馬郎婦",
    "X70n1386_004:0349c02_0": "聲色純真。",
    "X70n1386_004:0349c02_1": "見聞不礙。",
    "X70n1386_004:0349c02_2": "宴坐經行。",
    "X70n1386_004:0349c02_3": "得大自在。",
    "X70n1386_004:0349c02_4": "脚頭脚底黑漫漫。",
    "X70n1386_004:0349c03_5": "又逐春風婦馬郎。",
    "X70n1386_004:0349c04_0": "達磨",
    "X70n1386_004:0349c05_0": "白璧暗投。",
    "X70n1386_004:0349c05_1": "遭他按劍。",
    "X70n1386_004:0349c05_2": "折得莖蘆。",
    "X70n1386_004:0349c05_3": "還衝巨浪。",
    "X70n1386_004:0349c05_4": "闔國人追亦不回。",
    "X70n1386_004:0349c06_5": "掩羞賴有閑和尚。",
    "X70n1386_004:0349c07_0": "我東土人。",
    "X70n1386_004:0349c07_1": "一性純真。",
    "X70n1386_004:0349c07_2": "被他明破。",
    "X70n1386_004:0349c07_3": "不直半文。",
    "X70n1386_004:0349c07_4": "皮肉骨膸。",
    "X70n1386_004:0349c08_0": "狼藉分爭。",
    "X70n1386_004:0349c08_1": "當時若藥得死。",
    "X70n1386_004:0349c08_2": "今日定見太平。",
    "X70n1386_004:0349c09_0": "孟浪到梁朝。",
    "X70n1386_004:0349c09_1": "不契梁朝意。",
    "X70n1386_004:0349c09_2": "放過一著。",
    "X70n1386_004:0349c09_3": "走入魏地。",
    "X70n1386_004:0349c09_4": "神光謾說安心。",
    "X70n1386_004:0349c10_5": "未免失却一臂。",
    "X70n1386_004:0349c11_0": "初祖",
    "X70n1386_004:0349c12_0": "航海越漠來。",
    "X70n1386_004:0349c12_1": "幾度藥不殺。",
    "X70n1386_004:0349c12_2": "壞我震旦人。",
    "X70n1386_004:0349c12_3": "至今[病丙+斯]淈[泳永+盾]。",
    "X70n1386_004:0349c13_0": "二祖",
    "X70n1386_004:0349c14_0": "覔心無處覓。",
    "X70n1386_004:0349c14_1": "當下便心安。",
    "X70n1386_004:0349c14_2": "早知氷是水。",
    "X70n1386_004:0349c14_3": "兩臂定完全。",
    "X70n1386_004:0349c15_0": "三祖",
    "X70n1386_004:0349c16_0": "覓罪不可得。",
    "X70n1386_004:0349c16_1": "更於何處懺。",
    "X70n1386_004:0349c16_2": "雲翳豁然開。",
    "X70n1386_004:0349c16_3": "青天孤月上。",
    "X70n1386_004:0349c17_0": "四祖",
    "X70n1386_004:0349c18_0": "誰縛無人縛。",
    "X70n1386_004:0349c18_1": "何更求解脫。",
    "X70n1386_004:0349c18_2": "未必右軍鵝。",
    "X70n1386_004:0349c18_3": "便是支郎鶴。",
    "X70n1386_004:0349c19_0": "五祖",
    "X70n1386_004:0349c20_0": "栽遍滿山松。",
    "X70n1386_004:0349c20_1": "暗地翻身轉。",
    "X70n1386_004:0349c20_2": "雖然得信衣。",
    "X70n1386_004:0349c20_3": "何曾識爺面。",
    "X70n1386_004:0349c21_0": "六祖",
    "X70n1386_004:0349c22_0": "腰石碓坊舂。",
    "X70n1386_004:0349c22_1": "不識一丁字。",
    "X70n1386_004:0349c22_2": "無樹亦無臺。",
    "X70n1386_004:0349c22_3": "猶傳鉢袋子。",
    "X70n1386_004:0349c23_0": "布袋",
    "X70n1386_004:0349c24_0": "杖挑布袋。",
    "X70n1386_004:0349c24_1": "雲生脚下。",
    "X70n1386_004:0349c24_2": "前街後巷。",
    "X70n1386_004:0349c24_3": "渾無顧籍。",
    "X70n1386_004:0349c24_4": "拊背喚得回。",
    "X70n1386_004:0350a01_5": "幾人能領話。",
    "X70n1386_004:0350a01_6": "也且只得奈。",
    "X70n1386_004:0350a01_7": "煩鐵奉化人難化。",
    "X70n1386_004:0350a02_0": "辭兜率。",
    "X70n1386_004:0350a02_1": "混凡塵。",
    "X70n1386_004:0350a02_2": "閉眼昨夜肚裏惺惺。",
    "X70n1386_004:0350a02_3": "何如起來。",
    "X70n1386_004:0350a02_4": "提却拄杖子。",
    "X70n1386_004:0350a03_5": "東行西行。",
    "X70n1386_004:0350a03_6": "忽然等看箇人。",
    "X70n1386_004:0350a04_0": "乞錢錢又無。",
    "X70n1386_004:0350a04_1": "等人人不見。",
    "X70n1386_004:0350a04_2": "不知兜率天。",
    "X70n1386_004:0350a04_3": "何如奉化懸。",
    "X70n1386_004:0350a05_0": "拍手呵呵。",
    "X70n1386_004:0350a05_1": "天回地轉。",
    "X70n1386_004:0350a06_0": "豐干寒山拾得圖",
    "X70n1386_004:0350a07_0": "三人必有我師。",
    "X70n1386_004:0350a07_1": "臭肉元同一味。",
    "X70n1386_004:0350a07_2": "把手聚頭。",
    "X70n1386_004:0350a07_3": "蘇盧悉里。",
    "X70n1386_004:0350a08_0": "只因一等饒舌。",
    "X70n1386_004:0350a08_1": "兩箇隱身無地。",
    "X70n1386_004:0350a08_2": "可惜當初國清寺裏。",
    "X70n1386_004:0350a09_0": "一隊懞憧師僧。",
    "X70n1386_004:0350a09_1": "更沒些子意智。",
    "X70n1386_004:0350a10_0": "四睡圖",
    "X70n1386_004:0350a11_0": "一等騎虎來。",
    "X70n1386_004:0350a11_1": "兩箇挨肩去。",
    "X70n1386_004:0350a11_2": "松門外聚頭。",
    "X70n1386_004:0350a11_3": "輥作一處睡。",
    "X70n1386_004:0350a12_0": "夢蝶栩栩不知。",
    "X70n1386_004:0350a12_1": "孰為人孰為虎。",
    "X70n1386_004:0350a12_2": "待渠眼若開時。",
    "X70n1386_004:0350a12_3": "南山有一轉語。",
    "X70n1386_004:0350a14_0": "言法華",
    "X70n1386_004:0350a15_0": "脚踏木履。",
    "X70n1386_004:0350a15_1": "手指虗空。",
    "X70n1386_004:0350a15_2": "法華三昧。",
    "X70n1386_004:0350a15_3": "舌本玲瓏。",
    "X70n1386_004:0350a15_4": "連書十三。",
    "X70n1386_004:0350a16_0": "如虫蝕木。",
    "X70n1386_004:0350a16_1": "引得一類邪徒。",
    "X70n1386_004:0350a16_2": "至今胡卜亂卜。",
    "X70n1386_004:0350a17_0": "寒山拾得望月",
    "X70n1386_004:0350a18_0": "木葉題詩。",
    "X70n1386_004:0350a18_1": "寺厨執爨。",
    "X70n1386_004:0350a18_2": "遇夜乘閑。",
    "X70n1386_004:0350a18_3": "林間舒散。",
    "X70n1386_004:0350a18_4": "一片氷壺無影像。",
    "X70n1386_004:0350a19_5": "分明照破渠肝膽。",
    "X70n1386_004:0350a19_6": "堪笑當時天台山。",
    "X70n1386_004:0350a19_7": "中也無一箇具眼。",
    "X70n1386_004:0350a21_0": "猪頭和尚",
    "X70n1386_004:0350a22_0": "手把猪頭。",
    "X70n1386_004:0350a22_1": "易見難識。",
    "X70n1386_004:0350a22_2": "莫教說破。",
    "X70n1386_004:0350a22_3": "分文不直。",
    "X70n1386_004:0350a23_0": "蜆子和尚",
    "X70n1386_004:0350a24_0": "把箇里撈波。",
    "X70n1386_004:0350a24_1": "做盡窮伎倆。",
    "X70n1386_004:0350a24_2": "推出酒臺盤。",
    "X70n1386_004:0350a24_3": "至今収不上。",
    "X70n1386_004:0350b01_0": "楊岐和尚",
    "X70n1386_004:0350b02_0": "不會禪。",
    "X70n1386_004:0350b02_1": "也住院。",
    "X70n1386_004:0350b02_2": "旨的全無。",
    "X70n1386_004:0350b02_3": "種田愽飯。",
    "X70n1386_004:0350b02_4": "大笑接白雲瞎漢。",
    "X70n1386_004:0350b03_5": "無端帶累徧地兒孫。",
    "X70n1386_004:0350b03_6": "至今東西不分。",
    "X70n1386_004:0350b03_7": "南北不辨。",
    "X70n1386_004:0350b04_0": "贊五祖演和尚",
    "X70n1386_004:0350b05_0": "參錄公猶未。",
    "X70n1386_004:0350b05_1": "瞥見白雲方始徹。",
    "X70n1386_004:0350b05_2": "果有超師之作。",
    "X70n1386_004:0350b05_3": "敢道端師翁語拙。",
    "X70n1386_004:0350b06_4": "一生居淮不入淛。",
    "X70n1386_004:0350b06_5": "獨弄單提這一著。",
    "X70n1386_004:0350b06_6": "至於接三佛控南堂。",
    "X70n1386_004:0350b07_7": "以一大藏。",
    "X70n1386_004:0350b07_8": "切入囉孃夫。",
    "X70n1386_004:0350b07_9": "是之謂東山正續。",
    "X70n1386_004:0350b08_10": "毫髮不移。",
    "X70n1386_004:0350b08_11": "亘千萬世。",
    "X70n1386_004:0350b08_12": "源深流長者也。",
    "X70n1386_004:0350b09_0": "普化和尚",
    "X70n1386_004:0350b10_0": "走城郭。",
    "X70n1386_004:0350b10_1": "搖鈴鐸。",
    "X70n1386_004:0350b10_2": "堂前喫生菜。",
    "X70n1386_004:0350b10_3": "觸著驢性發。",
    "X70n1386_004:0350b10_4": "勘破河陽木塔。",
    "X70n1386_004:0350b11_5": "擒下臨濟小卒。",
    "X70n1386_004:0350b11_6": "賺却鎮州一城人。",
    "X70n1386_004:0350b11_7": "鐸聲已遠青天闊。",
    "X70n1386_004:0350b13_0": "臨濟和尚",
    "X70n1386_004:0350b14_0": "空拳捺定。",
    "X70n1386_004:0350b14_1": "喝聲雷震。",
    "X70n1386_004:0350b14_2": "閃電光中。",
    "X70n1386_004:0350b14_3": "要分邪正。",
    "X70n1386_004:0350b14_4": "駕大脫空。",
    "X70n1386_004:0350b15_0": "賣無主贓。",
    "X70n1386_004:0350b15_1": "似恁落賴心腸。",
    "X70n1386_004:0350b15_2": "至今却有兒郎。",
    "X70n1386_004:0350b16_0": "維摩",
    "X70n1386_004:0350b17_0": "據坐胡床。",
    "X70n1386_004:0350b17_1": "風悄悄地。",
    "X70n1386_004:0350b17_2": "四八癡人夜走。",
    "X70n1386_004:0350b17_3": "未免落他圈樻。",
    "X70n1386_004:0350b18_0": "七佛之師。",
    "X70n1386_004:0350b18_1": "也遭連累。",
    "X70n1386_004:0350b18_2": "石田當時在傍。",
    "X70n1386_004:0350b18_3": "只消打箇噴嚏。",
    "X70n1386_004:0350b19_0": "靈照女",
    "X70n1386_004:0350b20_0": "惡種草。",
    "X70n1386_004:0350b20_1": "生冤家。",
    "X70n1386_004:0350b20_2": "笟籬定價。",
    "X70n1386_004:0350b20_3": "分文不差。",
    "X70n1386_004:0350b20_4": "末梢猶尀耐。",
    "X70n1386_004:0350b20_5": "機先不讓爺。",
    "X70n1386_004:0350b22_0": "破庵和尚",
    "X70n1386_004:0350b23_0": "百無能。",
    "X70n1386_004:0350b23_1": "得人憎。",
    "X70n1386_004:0350b23_2": "火中釣鱉。",
    "X70n1386_004:0350b23_3": "日裏藏氷。",
    "X70n1386_004:0350b23_4": "養子不曾教。",
    "X70n1386_004:0350b23_5": "繩上更安繩。",
    "X70n1386_004:0350b24_6": "谷孤古東山正脉。",
    "X70n1386_004:0350b24_7": "烏戶呼真本川僧。",
    "X70n1386_004:0350c01_0": "贊水月觀音",
    "X70n1386_004:0350c02_0": "現自在端嚴相。",
    "X70n1386_004:0350c02_1": "起利他悲憫心。",
    "X70n1386_004:0350c02_2": "水茫茫月沉沉。",
    "X70n1386_004:0350c02_3": "眾生無盡。",
    "X70n1386_004:0350c03_4": "我願方興。",
    "X70n1386_004:0350c03_5": "曉而復昏。",
    "X70n1386_004:0350c03_6": "泯去來今。",
    "X70n1386_004:0350c04_0": "贊豐干",
    "X70n1386_004:0350c05_0": "走松門。",
    "X70n1386_004:0350c05_1": "尋寒拾。",
    "X70n1386_004:0350c05_2": "虎斑易見。",
    "X70n1386_004:0350c05_3": "人斑難識。",
    "X70n1386_004:0350c05_4": "識不識。",
    "X70n1386_004:0350c05_5": "惡聲惡跡成狼藉。",
    "X70n1386_004:0350c07_0": "贊布袋",
    "X70n1386_004:0350c08_0": "掣風顛。",
    "X70n1386_004:0350c08_1": "走市[廓享+墨]。",
    "X70n1386_004:0350c08_2": "回頭顧盻。",
    "X70n1386_004:0350c08_3": "拄杖橫肩。",
    "X70n1386_004:0350c08_4": "山僧既見。",
    "X70n1386_004:0350c08_5": "不可無言。",
    "X70n1386_004:0350c09_6": "[囗@力]。",
    "X70n1386_004:0350c09_7": "放下破布袋。",
    "X70n1386_004:0350c09_8": "與你一文錢。",
    "X70n1386_004:0350c10_0": "贊三教圖",
    "X70n1386_004:0350c11_0": "警世昏三老翁。",
    "X70n1386_004:0350c11_1": "服雖殊心亦同。",
    "X70n1386_004:0350c11_2": "於中議優劣。",
    "X70n1386_004:0350c11_3": "蒿箭射虗空。",
    "X70n1386_004:0350c13_0": "贊政黃牛",
    "X70n1386_004:0350c14_0": "不解倒騎。",
    "X70n1386_004:0350c14_1": "惟牛所之。",
    "X70n1386_004:0350c14_2": "郊原平衍。",
    "X70n1386_004:0350c14_3": "鞭索不施。",
    "X70n1386_004:0350c14_4": "山黯黯水漪漪。",
    "X70n1386_004:0350c15_5": "知我者白鷺鶿。",
    "X70n1386_004:0350c16_0": "仙人望月濯足",
    "X70n1386_004:0350c17_0": "夜靜山空月半彎。",
    "X70n1386_004:0350c17_1": "挽衣垂足滌潺湲。",
    "X70n1386_004:0350c17_2": "無人領此深深意。",
    "X70n1386_004:0350c18_3": "別向壺中更覔天。",
    "X70n1386_004:0350c19_0": "贊宗道者",
    "X70n1386_004:0350c20_0": "走下桐城赤脚歸。",
    "X70n1386_004:0350c20_1": "半風顛又半憨癡。",
    "X70n1386_004:0350c20_2": "草鞋却把袈裟褁。",
    "X70n1386_004:0350c21_3": "二虎雙鴉笑殺伊。",
    "X70n1386_004:0350c22_0": "贊黃檗和尚",
    "X70n1386_004:0350c23_0": "破布褁真珠。",
    "X70n1386_004:0350c23_1": "古寺甘守拙。",
    "X70n1386_004:0350c23_2": "與裴國安名。",
    "X70n1386_004:0350c23_3": "對百丈吐舌。",
    "X70n1386_004:0350c24_0": "棒頭敲出小[病丙+斯]兒。",
    "X70n1386_004:0350c24_1": "却向大愚言下瞥。",
    "X70n1386_004:0350c24_2": "瞥不瞥。",
    "X70n1386_004:0350c24_3": "返遭一掌如何雪。",
    "X70n1386_004:0351a02_0": "贊蓑衣道人",
    "X70n1386_004:0351a03_0": "佯狂混跡養天和。",
    "X70n1386_004:0351a03_1": "上界其如官府多。",
    "X70n1386_004:0351a03_2": "暑了又寒寒又暑。",
    "X70n1386_004:0351a04_3": "一蓑衣外更無他。",
    "X70n1386_004:0351a05_0": "贊朝陽穿破衲。",
    "X70n1386_004:0351a05_1": "待月了殘經一衲三冬。",
    "X70n1386_004:0351a06_2": "千針萬線。",
    "X70n1386_004:0351a06_3": "日影上三竿。",
    "X70n1386_004:0351a06_4": "眼力增一半。",
    "X70n1386_004:0351a07_0": "日晷已殂。",
    "X70n1386_004:0351a07_1": "我經未了。",
    "X70n1386_004:0351a07_2": "掩卷立須臾。",
    "X70n1386_004:0351a07_3": "氷壺挂林抄。",
    "X70n1386_004:0351a08_0": "福長老繪師像請贊",
    "X70n1386_004:0351a09_0": "施不犯令。",
    "X70n1386_004:0351a09_1": "用無病藥。",
    "X70n1386_004:0351a09_2": "笑有祖已來。",
    "X70n1386_004:0351a09_3": "錯會者多。",
    "X70n1386_004:0351a09_4": "將衲僧珍財。",
    "X70n1386_004:0351a10_5": "盡底藉沒。",
    "X70n1386_004:0351a10_6": "空腹高心。",
    "X70n1386_004:0351a10_7": "有年無德。",
    "X70n1386_004:0351a10_8": "就中一處最堪怜。",
    "X70n1386_004:0351a11_9": "車子橫推向途轍。",
    "X70n1386_004:0351a11_10": "(咄)。",
    "X70n1386_004:0351a12_0": "潮州禮長老請贊",
    "X70n1386_004:0351a13_0": "面如死灰。",
    "X70n1386_004:0351a13_1": "匙挑不上。",
    "X70n1386_004:0351a13_2": "祖翁活業。",
    "X70n1386_004:0351a13_3": "盡情破蕩。",
    "X70n1386_004:0351a13_4": "無星秤子拈來。",
    "X70n1386_004:0351a14_5": "也解分斤定兩。",
    "X70n1386_004:0351a14_6": "禮長老少思筭。",
    "X70n1386_004:0351a14_7": "鱷魚幸自徙化方。",
    "X70n1386_004:0351a15_8": "勾引渠歸成禍患。",
    "X70n1386_004:0351a16_0": "自贊",
    "X70n1386_004:0351a17_0": "處世昏昏。",
    "X70n1386_004:0351a17_1": "臨事草草。",
    "X70n1386_004:0351a17_2": "太近實頭。",
    "X70n1386_004:0351a17_3": "人謂古老。",
    "X70n1386_004:0351a17_4": "是非到耳。",
    "X70n1386_004:0351a18_0": "風吹石臼。",
    "X70n1386_004:0351a18_1": "只有一般。",
    "X70n1386_004:0351a18_2": "最不恰好。",
    "X70n1386_004:0351a18_3": "解騎三脚驢。",
    "X70n1386_004:0351a18_4": "來往長安道。",
    "X70n1386_004:0351a20_0": "總長老請贊",
    "X70n1386_004:0351a21_0": "百種無能。",
    "X70n1386_004:0351a21_1": "面冷如氷。",
    "X70n1386_004:0351a21_2": "與世落落。",
    "X70n1386_004:0351a21_3": "任運騰騰。",
    "X70n1386_004:0351a21_4": "愛將一字禪。",
    "X70n1386_004:0351a22_5": "靠倒杜衲僧。",
    "X70n1386_004:0351a22_6": "厨山長老。",
    "X70n1386_004:0351a22_7": "却要稟承。",
    "X70n1386_004:0351a22_8": "谷孤古林鴆砧。",
    "X70n1386_004:0351a23_0": "各自有響音。",
    "X70n1386_004:0351a23_1": "又何必書。",
    "X70n1386_004:0351a23_2": "此處無金。",
    "X70n1386_004:0351a24_0": "炬長老請贊",
    "X70n1386_004:0351b01_0": "刀不自截。",
    "X70n1386_004:0351b01_1": "水不自洗。",
    "X70n1386_004:0351b01_2": "我真我贊。",
    "X70n1386_004:0351b01_3": "成何道理。",
    "X70n1386_004:0351b01_4": "請之既堅。",
    "X70n1386_004:0351b02_0": "却之不已。",
    "X70n1386_004:0351b02_1": "有一句子。",
    "X70n1386_004:0351b02_2": "玄沙道底。",
    "X70n1386_004:0351b03_0": "清菴主請贊",
    "X70n1386_004:0351b04_0": "以石為田。",
    "X70n1386_004:0351b04_1": "舉世恠笑。",
    "X70n1386_004:0351b04_2": "一粒入土。",
    "X70n1386_004:0351b04_3": "不耘自秀。",
    "X70n1386_004:0351b04_4": "也無禪。",
    "X70n1386_004:0351b04_5": "也無道。",
    "X70n1386_004:0351b05_6": "衲僧未跨門。",
    "X70n1386_004:0351b05_7": "早已勘破了。",
    "X70n1386_004:0351b05_8": "頂門自有通天竅。",
    "X70n1386_004:0351b05_9": "(咄)。",
    "X70n1386_004:0351b06_0": "昭長老請贊",
    "X70n1386_004:0351b07_0": "全無孔竅。",
    "X70n1386_004:0351b07_1": "指桑罵柳。",
    "X70n1386_004:0351b07_2": "瞎衲僧正眼。",
    "X70n1386_004:0351b07_3": "破東山暗號。",
    "X70n1386_004:0351b07_4": "三點前三點後。",
    "X70n1386_004:0351b08_5": "起模畫樣已無端。",
    "X70n1386_004:0351b08_6": "一任傍人論好醜。",
    "X70n1386_004:0351b09_0": "寒岩居士請贊",
    "X70n1386_004:0351b10_0": "末法無知老比丘。",
    "X70n1386_004:0351b10_1": "虗空尋縫陸行舟。",
    "X70n1386_004:0351b10_2": "寒岩可謂心腸毒。",
    "X70n1386_004:0351b11_3": "寫出令人罵不休。",
    "X70n1386_004:0351b12_0": "尼長老請贊",
    "X70n1386_004:0351b13_0": "住山三十載。",
    "X70n1386_004:0351b13_1": "潦倒福緣微。",
    "X70n1386_004:0351b13_2": "全提一著。",
    "X70n1386_004:0351b13_3": "衲子攢眉。",
    "X70n1386_004:0351b13_4": "我無溈山之作。",
    "X70n1386_004:0351b14_5": "汝有銕磨之機。",
    "X70n1386_004:0351b14_6": "自知水底難撈月。",
    "X70n1386_004:0351b14_7": "却倩丹青染污伊。",
    "X70n1386_004:0351b16_0": "秀長老請贊",
    "X70n1386_004:0351b17_0": "飛來峰下。",
    "X70n1386_004:0351b17_1": "龍床角畔。",
    "X70n1386_004:0351b17_2": "用沒意志一著。",
    "X70n1386_004:0351b17_3": "師僧遭他惑亂。",
    "X70n1386_004:0351b18_0": "胡笳忽轉陽春調。",
    "X70n1386_004:0351b18_1": "也有知音來合伴。",
    "X70n1386_004:0351b18_2": "描邈將來。",
    "X70n1386_004:0351b18_3": "未得一半。",
    "X70n1386_004:0351b19_4": "直饒即今此話大行。",
    "X70n1386_004:0351b19_5": "已是彼此兩不著便。",
    "X70n1386_004:0351b20_0": "贊李源圓澤圖",
    "X70n1386_004:0351b21_0": "昭昭靈靈。",
    "X70n1386_004:0351b21_1": "未脫生死。",
    "X70n1386_004:0351b21_2": "等閑狹路相逢。",
    "X70n1386_004:0351b21_3": "無奈這冤家子。",
    "X70n1386_004:0351b22_0": "天竺山前招角歌。",
    "X70n1386_004:0351b22_1": "至今餘韻在松蘿。",
    "X70n1386_004:0351b23_0": "贊呂先生",
    "X70n1386_004:0351b24_0": "為儒儒不達。",
    "X70n1386_004:0351b24_1": "學仙仙非真。",
    "X70n1386_004:0351b24_2": "黃龍門下過。",
    "X70n1386_004:0351b24_3": "秋蚊咬銕釘。",
    "X70n1386_004:0351c01_0": "回先生回先生。",
    "X70n1386_004:0351c01_1": "岳陽人不識。",
    "X70n1386_004:0351c01_2": "老樹却成精。",
    "X70n1386_004:0351c02_0": "覺城居士請贊師頂相",
    "X70n1386_004:0351c03_0": "全無寸長。",
    "X70n1386_004:0351c03_1": "但據驢性。",
    "X70n1386_004:0351c03_2": "不行深深海底。",
    "X70n1386_004:0351c03_3": "不立高高峰頂。",
    "X70n1386_004:0351c04_0": "問佛法。",
    "X70n1386_004:0351c04_1": "今日困。",
    "X70n1386_004:0351c04_2": "瞎衲僧眼。",
    "X70n1386_004:0351c04_3": "識毗耶病。",
    "X70n1386_004:0351c04_4": "素與覺城無冤。",
    "X70n1386_004:0351c05_0": "何事圖形畵影。",
    "X70n1386_004:0351c06_0": "受業師孫請贊",
    "X70n1386_004:0351c07_0": "削髮村院裡。",
    "X70n1386_004:0351c07_1": "[女*(口/口)*辛]陋少見聞。",
    "X70n1386_004:0351c07_2": "信脚到南地。",
    "X70n1386_004:0351c07_3": "也作住山人。",
    "X70n1386_004:0351c08_0": "龍床角畔脫空話。",
    "X70n1386_004:0351c08_1": "引得衲子如蜂屯。",
    "X70n1386_004:0351c08_2": "思歸未得。",
    "X70n1386_004:0351c08_3": "故國夢頻。",
    "X70n1386_004:0351c09_4": "慇懃藉汝將予去。",
    "X70n1386_004:0351c09_5": "且看梨花二月春(受業梨花村)。",
    "X70n1386_004:0351c10_0": "自贊",
    "X70n1386_004:0351c11_0": "人弃我取。",
    "X70n1386_004:0351c11_1": "人奪我與。",
    "X70n1386_004:0351c11_2": "涉世全乖。",
    "X70n1386_004:0351c11_3": "獨行無侶。",
    "X70n1386_004:0351c11_4": "超佛越祖當頭句。",
    "X70n1386_004:0351c12_5": "冷泉日夜滔滔舉。",
    "X70n1386_004:0351c12_6": "斂手忌言坐閑處。",
    "X70n1386_004:0351c12_7": "可憐也被丹青污。",
    "X70n1386_004:0351c14_0": "握拂子。",
    "X70n1386_004:0351c14_1": "坐繩床。",
    "X70n1386_004:0351c14_2": "默爾無言。",
    "X70n1386_004:0351c14_3": "其聲琅琅。",
    "X70n1386_004:0351c14_4": "斷衲僧命脉。",
    "X70n1386_004:0351c14_5": "壞叢林紀綱。",
    "X70n1386_004:0351c15_6": "丹青寫出。",
    "X70n1386_004:0351c15_7": "醜惡難藏。",
    "X70n1386_004:0351c15_8": "一任傍人話短長。",
    "X70n1386_004:0351c16_0": "偈頌",
    "X70n1386_004:0351c17_0": "道號毒果",
    "X70n1386_004:0351c18_0": "鐵樹花開半夜間。",
    "X70n1386_004:0351c18_1": "枝頭結箇子團團。",
    "X70n1386_004:0351c18_2": "古今藥殺人無數。",
    "X70n1386_004:0351c19_3": "不信教伊咬破看。",
    "X70n1386_004:0351c20_0": "化柴",
    "X70n1386_004:0351c21_0": "祖翁元是賣柴漢。",
    "X70n1386_004:0351c21_1": "今日無柴却可怜。",
    "X70n1386_004:0351c21_2": "去謁檀門好収拾。",
    "X70n1386_004:0351c22_3": "歸來要接午炊煙。",
    "X70n1386_004:0351c23_0": "送圭士庵歸蜀(在淨慈作首座)",
    "X70n1386_004:0351c24_0": "昔日隨流今逆流。",
    "X70n1386_004:0351c24_1": "昔時今日有來由。",
    "X70n1386_004:0351c24_2": "李將軍本穿楊手。",
    "X70n1386_004:0352a01_3": "誤向南山射石頭。",
    "X70n1386_004:0352a02_0": "化砌竈",
    "X70n1386_004:0352a03_0": "鑊已鑄成無滲漏。",
    "X70n1386_004:0352a03_1": "竈猶未砌正經營。",
    "X70n1386_004:0352a03_2": "嵩山杖子休拈出。",
    "X70n1386_004:0352a04_3": "我要粥香聞五更。",
    "X70n1386_004:0352a05_0": "送琮監寺住院",
    "X70n1386_004:0352a06_0": "桐江江上一絲風。",
    "X70n1386_004:0352a06_1": "不釣盲龜只釣龍。",
    "X70n1386_004:0352a06_2": "浮定有無誰識意。",
    "X70n1386_004:0352a07_3": "夜凉如水月如弓。",
    "X70n1386_004:0352a08_0": "上張及庵乞米",
    "X70n1386_004:0352a09_0": "南山近日飯籬空。",
    "X70n1386_004:0352a09_1": "衲子難教口欱風。",
    "X70n1386_004:0352a09_2": "引臂上方香積界。",
    "X70n1386_004:0352a10_3": "須勞金粟展神通。",
    "X70n1386_004:0352a11_0": "接待",
    "X70n1386_004:0352a12_0": "滿甑熟炊無米飯。",
    "X70n1386_004:0352a12_1": "半途長接不來人。",
    "X70n1386_004:0352a12_2": "但持此語諸方去。",
    "X70n1386_004:0352a13_3": "博得知音一笑新。",
    "X70n1386_004:0352a14_0": "題石霜雷遷塔",
    "X70n1386_004:0352a15_0": "一念慈容元不隔。",
    "X70n1386_004:0352a15_1": "何須特地肆乖張。",
    "X70n1386_004:0352a15_2": "平高就下婆心切。",
    "X70n1386_004:0352a16_3": "惱得雷公一夜忙。",
    "X70n1386_004:0352a17_0": "自頌石田",
    "X70n1386_004:0352a18_0": "石上栽田世所稀。",
    "X70n1386_004:0352a18_1": "老農聞說也攢眉。",
    "X70n1386_004:0352a18_2": "有人下得泥犁種。",
    "X70n1386_004:0352a19_3": "別甑炊香供養伊。",
    "X70n1386_004:0352a20_0": "送韶化士幹靈雲古寺基",
    "X70n1386_004:0352a21_0": "劒客重尋眼翳生。",
    "X70n1386_004:0352a21_1": "至今孤露不堪聞。",
    "X70n1386_004:0352a21_2": "老韶直下能扶起。",
    "X70n1386_004:0352a22_3": "十口精神減八分。",
    "X70n1386_004:0352a23_0": "送幹鐘",
    "X70n1386_004:0352a24_0": "大爐鞴裏笑翻身。",
    "X70n1386_004:0352a24_1": "空腹高心許十成。",
    "X70n1386_004:0352a24_2": "好聽玉樓撞動處。",
    "X70n1386_004:0352b01_3": "和聲送出太分明。",
    "X70n1386_004:0352b02_0": "送皎中庵住廣壽",
    "X70n1386_004:0352b03_0": "名字馨香滿道途。",
    "X70n1386_004:0352b03_1": "挽將洞水注南湖。",
    "X70n1386_004:0352b03_2": "他時把杖來輕探。",
    "X70n1386_004:0352b04_3": "莫謂從前一滴無。",
    "X70n1386_004:0352b05_0": "送月首座住菴",
    "X70n1386_004:0352b06_0": "結草為庵自昔賢。",
    "X70n1386_004:0352b06_1": "古今誰後復誰先。",
    "X70n1386_004:0352b06_2": "客來須得通方句。",
    "X70n1386_004:0352b07_3": "莫只隨邪竪起拳。",
    "X70n1386_004:0352b08_0": "送珪上人歸鄉",
    "X70n1386_004:0352b09_0": "南高峰對北高峯。",
    "X70n1386_004:0352b09_1": "兩峰矗上摩青穹。",
    "X70n1386_004:0352b09_2": "上人閣錫在其下。",
    "X70n1386_004:0352b10_3": "咬姜呷醋期心空。",
    "X70n1386_004:0352b10_4": "心空一物無依倚。",
    "X70n1386_004:0352b10_5": "却笑老胡成曲指。",
    "X70n1386_004:0352b11_6": "回頭重覔舊家山。",
    "X70n1386_004:0352b11_7": "莫學我行荒草裏。",
    "X70n1386_004:0352b12_0": "吳道夫乞語",
    "X70n1386_004:0352b13_0": "走得波波兩履穿。",
    "X70n1386_004:0352b13_1": "擔頭書卷未能捐。",
    "X70n1386_004:0352b13_2": "待君患過維摩病。",
    "X70n1386_004:0352b14_3": "却好重來見石田。",
    "X70n1386_004:0352b15_0": "送巢道士",
    "X70n1386_004:0352b16_0": "一點靈光觸處通。",
    "X70n1386_004:0352b16_1": "心空不見太虗空。",
    "X70n1386_004:0352b16_2": "五千言把為玄妙。",
    "X70n1386_004:0352b17_3": "濕帋如何裹大虫。",
    "X70n1386_004:0352b18_0": "送吉州雲上人",
    "X70n1386_004:0352b19_0": "語言動靜總天真。",
    "X70n1386_004:0352b19_1": "叉手徒勞問別人。",
    "X70n1386_004:0352b19_2": "舊說青原白家酒。",
    "X70n1386_004:0352b20_3": "子歸切忌再沾唇。",
    "X70n1386_004:0352b21_0": "和真歇墨蹟三頌",
    "X70n1386_004:0352b22_0": "箇事全超浩劫前。",
    "X70n1386_004:0352b22_1": "借功明位不徒然。",
    "X70n1386_004:0352b22_2": "但能不觸親爺諱。",
    "X70n1386_004:0352b23_3": "一任氷輪在處圓。",
    "X70n1386_004:0352b24_0": "摐然萬象體元真。",
    "X70n1386_004:0352b24_1": "雨沐雲蒸到眼新。",
    "X70n1386_004:0352b24_2": "開口恐成隨類墮。",
    "X70n1386_004:0352c01_3": "相逢多是笑吟吟。",
    "X70n1386_004:0352c02_0": "撒手懸空萬仞崖。",
    "X70n1386_004:0352c02_1": "方知佛祖絕梯階。",
    "X70n1386_004:0352c02_2": "無端諸老爭呈醜。",
    "X70n1386_004:0352c03_3": "未免將身一處埋。",
    "X70n1386_004:0352c04_0": "尼了然幹藏乞語",
    "X70n1386_004:0352c05_0": "三遶繩床眼未開。",
    "X70n1386_004:0352c05_1": "起模畫樣為安排。",
    "X70n1386_004:0352c05_2": "葛藤樁子如成就。",
    "X70n1386_004:0352c06_3": "自有龍天出手椎。",
    "X70n1386_004:0352c07_0": "茶湯會乞頌",
    "X70n1386_004:0352c08_0": "鋪心無下亦無高。",
    "X70n1386_004:0352c08_1": "一等無心次第澆。",
    "X70n1386_004:0352c08_2": "便是口吞三世佛。",
    "X70n1386_004:0352c09_3": "沾他涓滴也難消。",
    "X70n1386_004:0352c10_0": "城中出隊",
    "X70n1386_004:0352c11_0": "人家百萬帝城中。",
    "X70n1386_004:0352c11_1": "應念南山徹骨窮。",
    "X70n1386_004:0352c11_2": "鐵壁重重挨得入。",
    "X70n1386_004:0352c12_3": "笊籬無柄舀春風。",
    "X70n1386_004:0352c13_0": "斷臂僧復田業",
    "X70n1386_004:0352c14_0": "古人斷臂覔安心。",
    "X70n1386_004:0352c14_1": "豈有他能我不能。",
    "X70n1386_004:0352c14_2": "好手手中誇好手。",
    "X70n1386_004:0352c15_3": "千年常住一朝僧。",
    "X70n1386_004:0352c16_0": "送韶鐵鞭住西余",
    "X70n1386_004:0352c17_0": "西余舊說端獅子。",
    "X70n1386_004:0352c17_1": "解弄如今有幾人。",
    "X70n1386_004:0352c17_2": "不是區區謾相屈。",
    "X70n1386_004:0352c18_3": "要看手眼一時親。",
    "X70n1386_004:0352c19_0": "送僧",
    "X70n1386_004:0352c20_0": "久旱吳田半不収。",
    "X70n1386_004:0352c20_1": "子今西浙往東州。",
    "X70n1386_004:0352c20_2": "且圖有展炊巾處。",
    "X70n1386_004:0352c21_3": "佛法從教爛却休。",
    "X70n1386_004:0352c22_0": "送圓禪人",
    "X70n1386_004:0352c23_0": "靈山無地可容身。",
    "X70n1386_004:0352c23_1": "好泛江潮去問津。",
    "X70n1386_004:0352c23_2": "東浙藂林如海闊。",
    "X70n1386_004:0352c24_3": "但參露柱莫參人。",
    "X70n1386_004:0353a01_0": "煎笋",
    "X70n1386_004:0353a02_0": "錦繡乍脫玉為肌。",
    "X70n1386_004:0353a02_1": "更著油煎供養伊。",
    "X70n1386_004:0353a02_2": "鹽醋費他多少了。",
    "X70n1386_004:0353a03_3": "舌頭換却不曾知。",
    "X70n1386_004:0353a04_0": "相士朱蓑衣",
    "X70n1386_004:0353a05_0": "閱世双眸自有神。",
    "X70n1386_004:0353a05_1": "酒澆胷次語生春。",
    "X70n1386_004:0353a05_2": "一蓑衣底乾坤大。",
    "X70n1386_004:0353a06_3": "切莫怱怱說向人。",
    "X70n1386_004:0353a07_0": "空上人乞頌",
    "X70n1386_004:0353a08_0": "冷泉近日飯籮空。",
    "X70n1386_004:0353a08_1": "無奈栽田歲不逢。",
    "X70n1386_004:0353a08_2": "有个休粮方子妙。",
    "X70n1386_004:0353a09_3": "衲僧競去問天童。",
    "X70n1386_004:0353a10_0": "和戒首座韵號石潭",
    "X70n1386_004:0353a11_0": "兩目瞠瞠視碧霄。",
    "X70n1386_004:0353a11_1": "生吞佛祖氣雄豪。",
    "X70n1386_004:0353a11_2": "石潭誰得知深淺。",
    "X70n1386_004:0353a12_3": "盡日金風皷怒濤。",
    "X70n1386_004:0353a13_0": "送照上人歸蜀",
    "X70n1386_004:0353a14_0": "我墮南來鬢已衰。",
    "X70n1386_004:0353a14_1": "汝今何得悔來遲。",
    "X70n1386_004:0353a14_2": "烏藤[跳兆+孛]跳還歸那。",
    "X70n1386_004:0353a15_3": "佛祖從教不展眉。",
    "X70n1386_004:0353a16_0": "贈雲谷先生",
    "X70n1386_004:0353a17_0": "卦盤掇轉味天機。",
    "X70n1386_004:0353a17_1": "禍有胎兮福有基。",
    "X70n1386_004:0353a17_2": "昨夜孛星移一位。",
    "X70n1386_004:0353a18_3": "先生睡著不曾知。",
    "X70n1386_004:0353a19_0": "送祖上人",
    "X70n1386_004:0353a20_0": "祖祖相傳直至今。",
    "X70n1386_004:0353a20_1": "天高地逈少知音。",
    "X70n1386_004:0353a20_2": "到家人問相傳事。",
    "X70n1386_004:0353a21_3": "但道真鍮不愽金。",
    "X70n1386_004:0353a22_0": "一化士取血和墨寫藏經乞頌",
    "X70n1386_004:0353a23_0": "欲書火後舊時經。",
    "X70n1386_004:0353a23_1": "剔血和煤字字真。",
    "X70n1386_004:0353a23_2": "未舉筆前全藏了。",
    "X70n1386_004:0353a24_3": "聞絃應有賞音人。",
    "X70n1386_004:0353b01_0": "彬監寺爭田",
    "X70n1386_004:0353b02_0": "衲僧公驗既分明。",
    "X70n1386_004:0353b02_1": "祖父田園盡力爭。",
    "X70n1386_004:0353b02_2": "他日水雲同一飽。",
    "X70n1386_004:0353b03_3": "幾人放筯便忘恩。",
    "X70n1386_004:0353b04_0": "端大師",
    "X70n1386_004:0353b05_0": "峻峺門庭老末山。",
    "X70n1386_004:0353b05_1": "清風凜凜固難攀。",
    "X70n1386_004:0353b05_2": "古今彼此元無間。",
    "X70n1386_004:0353b06_3": "只在當人反掌間。",
    "X70n1386_004:0353b07_0": "送小師遊方",
    "X70n1386_004:0353b08_0": "莫辭脚力造諸方。",
    "X70n1386_004:0353b08_1": "佛法無多要久長。",
    "X70n1386_004:0353b08_2": "歷盡崎嶇到平地。",
    "X70n1386_004:0353b09_3": "歸來掀倒破禪床。",
    "X70n1386_004:0353b10_0": "示眾",
    "X70n1386_004:0353b11_0": "劒刃飜身猶是鈍。",
    "X70n1386_004:0353b11_1": "屋頭問路太無端。",
    "X70n1386_004:0353b11_2": "楚鷄不是丹山鳳。",
    "X70n1386_004:0353b12_3": "何必臨風刷羽翰。",
    "X70n1386_004:0353b13_0": "送炳藏主歸鄉號南山",
    "X70n1386_004:0353b14_0": "江海浮遊歲月移。",
    "X70n1386_004:0353b14_1": "五峰曾契少林機。",
    "X70n1386_004:0353b14_2": "白拈果有超師作。",
    "X70n1386_004:0353b15_3": "和我南山載取歸。",
    "X70n1386_004:0353b16_0": "送小然還鄉",
    "X70n1386_004:0353b17_0": "及早遊方及早歸。",
    "X70n1386_004:0353b17_1": "參禪須是後生時。",
    "X70n1386_004:0353b17_2": "傍人不必輕相笑。",
    "X70n1386_004:0353b18_3": "臨際元呼小[病丙+斯]兒。",
    "X70n1386_004:0353b19_0": "贈通禪客",
    "X70n1386_004:0353b20_0": "龍墀問法動天顏。",
    "X70n1386_004:0353b20_1": "天贈黃金一萬錢。",
    "X70n1386_004:0353b20_2": "打得衲僧公驗正。",
    "X70n1386_004:0353b21_3": "通禪依舊是通禪。",
    "X70n1386_004:0353b22_0": "送師孫昧禪人",
    "X70n1386_004:0353b23_0": "十五為僧二十歸。",
    "X70n1386_004:0353b23_1": "途中莫比在家時。",
    "X70n1386_004:0353b23_2": "老僧留浙汝回蜀。",
    "X70n1386_004:0353b24_3": "三昧從來古不知。",
    "X70n1386_004:0353c01_0": "辭淨慈赴靈隱",
    "X70n1386_004:0353c02_0": "湖上牢牢把一關。",
    "X70n1386_004:0353c02_1": "孤危獨立絕躋攀。",
    "X70n1386_004:0353c02_2": "老無定力隨風轉。",
    "X70n1386_004:0353c03_3": "又向南山過北山。",
    "X70n1386_004:0353c04_0": "題參政樓公二圓相圖",
    "X70n1386_004:0353c05_0": "皎然書平定字。",
    "X70n1386_004:0353c05_1": "攻媿寫二圓相。",
    "X70n1386_004:0353c05_2": "引得多少平人。",
    "X70n1386_004:0353c05_3": "望雲上樹。",
    "X70n1386_004:0353c06_4": "且喜兩沒交涉。",
    "X70n1386_004:0353c06_5": "要知的實。",
    "X70n1386_004:0353c06_6": "却須親見石田。",
    "X70n1386_004:0353c07_0": "跋真歇墨蹟",
    "X70n1386_004:0353c08_0": "真歇老子。",
    "X70n1386_004:0353c08_1": "與慈闈書。",
    "X70n1386_004:0353c08_2": "諸方題跋。",
    "X70n1386_004:0353c08_3": "各出己見。",
    "X70n1386_004:0353c08_4": "互若不同。",
    "X70n1386_004:0353c09_0": "殊不知。",
    "X70n1386_004:0353c09_1": "書首云。",
    "X70n1386_004:0353c09_2": "再覆則是當自有別幅也。",
    "X70n1386_004:0353c09_3": "言及奉詔住山。",
    "X70n1386_004:0353c10_4": "并問親眷上下。",
    "X70n1386_004:0353c10_5": "亦母子之至情。",
    "X70n1386_004:0353c10_6": "又何嫌焉。",
    "X70n1386_004:0353c10_7": "豈必言言言出世外。",
    "X70n1386_004:0353c11_8": "然後為得哉。",
    "X70n1386_004:0353c11_9": "學者宜於此求之。",
    "X70n1386_004:0353c12_0": "題卍菴墨蹟",
    "X70n1386_004:0353c13_0": "卍菴空裏採花。",
    "X70n1386_004:0353c13_1": "諸人石上種藕。",
    "X70n1386_004:0353c13_2": "三點前三點后。",
    "X70n1386_004:0353c13_3": "動南星蹉北斗。",
    "X70n1386_004:0353c14_4": "山僧口似磉盤。",
    "X70n1386_004:0353c14_5": "舜若多神失笑。",
    "X70n1386_004:0353c15_0": "何居士書華嚴經請跋",
    "X70n1386_004:0353c16_0": "華嚴大教。",
    "X70n1386_004:0353c16_1": "諸經極談。",
    "X70n1386_004:0353c16_2": "一字含萬法。",
    "X70n1386_004:0353c16_3": "一音徧一切。",
    "X70n1386_004:0353c16_4": "口議心思。",
    "X70n1386_004:0353c17_5": "濕紙包火。",
    "X70n1386_004:0353c17_6": "何君書而施諸名山。",
    "X70n1386_004:0353c17_7": "有緣者披誦。",
    "X70n1386_004:0353c17_8": "非從五十三參長者居士中來。",
    "X70n1386_004:0353c18_9": "安能如此。",
    "X70n1386_004:0353c18_10": "若於白紙黑字外。",
    "X70n1386_004:0353c19_11": "不起一絲毫知解。",
    "X70n1386_004:0353c19_12": "則大人境界。",
    "X70n1386_004:0353c19_13": "其庶幾焉。",
    "X70n1386_004:0353c20_0": "萬善友書法華經請跋",
    "X70n1386_004:0353c21_0": "法有三周。",
    "X70n1386_004:0353c21_1": "喻凡七種。",
    "X70n1386_004:0353c21_2": "止止牢辭。",
    "X70n1386_004:0353c21_3": "不肯容易便說。",
    "X70n1386_004:0353c21_4": "忉忉勤請。",
    "X70n1386_004:0353c22_5": "必以開演為期。",
    "X70n1386_004:0353c22_6": "不得已八字打開。",
    "X70n1386_004:0353c22_7": "用副彼四眾渴望。",
    "X70n1386_004:0353c23_8": "萬君善友。",
    "X70n1386_004:0353c23_9": "剡藤墨書。",
    "X70n1386_004:0353c23_10": "毛頴淘泓。",
    "X70n1386_004:0353c23_11": "俱有成佛之分。",
    "X70n1386_004:0353c24_0": "銀鈎鐵畫。",
    "X70n1386_004:0353c24_1": "當収輔教之切。",
    "X70n1386_004:0353c24_2": "是最上因緣。",
    "X70n1386_004:0353c24_3": "豈淺功德哉。",
    "X70n1386_004:0354a01_0": "我有大經卷。",
    "X70n1386_004:0354a01_1": "量等太虗空。",
    "X70n1386_004:0354a01_2": "目前直下辨端倪。",
    "X70n1386_004:0354a01_3": "帋上方知成染汙。",
    "X70n1386_004:0354a03_0": "跋家侍郎為信禪人刻佛偈",
    "X70n1386_004:0354a04_0": "資陽宗信禪者在俗時。",
    "X70n1386_004:0354a04_1": "刻石肖佛像。",
    "X70n1386_004:0354a04_2": "極其精妙。",
    "X70n1386_004:0354a04_3": "一旦棄去。",
    "X70n1386_004:0354a05_4": "祝髮學佛。",
    "X70n1386_004:0354a05_5": "乞語於存齋居士。",
    "X70n1386_004:0354a05_6": "說偈示之。",
    "X70n1386_004:0354a05_7": "滔滔委折。",
    "X70n1386_004:0354a06_8": "無異佛口流出。",
    "X70n1386_004:0354a06_9": "不知信能領會否。",
    "X70n1386_004:0354a06_10": "雖然。",
    "X70n1386_004:0354a06_11": "猶欠一著在。",
    "X70n1386_004:0354a07_12": "居士偈首云。",
    "X70n1386_004:0354a07_13": "手中千萬億佛。",
    "X70n1386_004:0354a07_14": "一一悉從心起。",
    "X70n1386_004:0354a07_15": "信可往問居士。",
    "X70n1386_004:0354a08_16": "不知某甲心從甚處起。",
    "X70n1386_004:0354a08_17": "居士決然別有轉身一路。",
    "X70n1386_004:0354a09_18": "若也不能。",
    "X70n1386_004:0354a09_19": "切忌死在居士句下。",
    "X70n1386_004:0354a10_0": "題劉右司筆蹟",
    "X70n1386_004:0354a11_0": "朔齋居士。",
    "X70n1386_004:0354a11_1": "為傳侍者。",
    "X70n1386_004:0354a11_2": "書龍門及白楊語。",
    "X70n1386_004:0354a11_3": "出以示予。",
    "X70n1386_004:0354a11_4": "求書數字於後。",
    "X70n1386_004:0354a12_5": "予云。",
    "X70n1386_004:0354a12_6": "二老言端語端。",
    "X70n1386_004:0354a12_7": "朔齋心正筆正。",
    "X70n1386_004:0354a12_8": "汝能篤信。",
    "X70n1386_004:0354a13_9": "(力行即日)策勳聖處。",
    "X70n1386_004:0354a13_10": "毛頴淘泓。",
    "X70n1386_004:0354a13_11": "俱有一分功德。",
    "X70n1386_004:0354a13_12": "況朔齋乎。",
    "X70n1386_004:0354a15_0": "跋游丞相為印上人書心經",
    "X70n1386_004:0354a16_0": "般若心經。",
    "X70n1386_004:0354a16_1": "大資相公所書。",
    "X70n1386_004:0354a16_2": "一字是一字。",
    "X70n1386_004:0354a16_3": "印上人授持。",
    "X70n1386_004:0354a17_0": "一句是一句。",
    "X70n1386_004:0354a17_1": "石田不敢措一浮辭。",
    "X70n1386_004:0354a17_2": "以謗真實義諦。",
    "X70n1386_004:0354a18_0": "癡絕寫師上堂心禪人以之求語",
    "X70n1386_004:0354a19_0": "南山半夜。",
    "X70n1386_004:0354a19_1": "信脚過連雲。",
    "X70n1386_004:0354a19_2": "太白無端走筆追陳跡。",
    "X70n1386_004:0354a19_3": "心禪人謹謹収藏。",
    "X70n1386_004:0354a20_4": "不知與山僧有甚死冤讎。",
    "X70n1386_004:0354a20_5": "見者不可不為雪屈。",
    "X70n1386_004:0354a22_0": "小佛事",
    "X70n1386_004:0354a23_0": "為太師史衛王起靈",
    "X70n1386_004:0354a24_0": "三界無法。",
    "X70n1386_004:0354a24_1": "何處求心。",
    "X70n1386_004:0354a24_2": "四大本空。",
    "X70n1386_004:0354a24_3": "應無所住。",
    "X70n1386_004:0354a24_4": "故我太師衛王。",
    "X70n1386_004:0354b01_5": "乘願力而來。",
    "X70n1386_004:0354b01_6": "乘願力而去。",
    "X70n1386_004:0354b01_7": "以去來為寂滅之場。",
    "X70n1386_004:0354b02_0": "以生死為遊戱之具。",
    "X70n1386_004:0354b02_1": "千載一時。",
    "X70n1386_004:0354b02_2": "百世一人。",
    "X70n1386_004:0354b02_3": "位兼文武。",
    "X70n1386_004:0354b03_0": "澤被寰瀛。",
    "X70n1386_004:0354b03_1": "曾扶杲日。",
    "X70n1386_004:0354b03_2": "直掛青冥。",
    "X70n1386_004:0354b03_3": "視伊傅周召。",
    "X70n1386_004:0354b03_4": "未肯多遜。",
    "X70n1386_004:0354b04_5": "孜韋李房杜。",
    "X70n1386_004:0354b04_6": "莫之與倫。",
    "X70n1386_004:0354b04_7": "至於相門出相。",
    "X70n1386_004:0354b04_8": "聲光赫奕。",
    "X70n1386_004:0354b05_0": "二十七考。",
    "X70n1386_004:0354b05_1": "中書汾陽。",
    "X70n1386_004:0354b05_2": "亦應避席。",
    "X70n1386_004:0354b05_3": "登耆壽。",
    "X70n1386_004:0354b05_4": "保終吉。",
    "X70n1386_004:0354b05_5": "茆土裂封。",
    "X70n1386_004:0354b06_6": "王爵世襲。",
    "X70n1386_004:0354b06_7": "此又振古所無。",
    "X70n1386_004:0354b06_8": "豈可求之方冊。",
    "X70n1386_004:0354b06_9": "今而已矣。",
    "X70n1386_004:0354b07_10": "孰不痛傷。",
    "X70n1386_004:0354b07_11": "仕宦至將相。",
    "X70n1386_004:0354b07_12": "富貴歸故鄉。",
    "X70n1386_004:0354b07_13": "昔未得歸今始歸。",
    "X70n1386_004:0354b08_14": "生死二途元不別。",
    "X70n1386_004:0354b08_15": "二途不別。",
    "X70n1386_004:0354b08_16": "十字縱橫。",
    "X70n1386_004:0354b08_17": "脚頭脚底通霄路。",
    "X70n1386_004:0354b09_18": "直踏毗盧頂上行。",
    "X70n1386_004:0354b10_0": "為鑒喝堂秉炬(二月十六日化)",
    "X70n1386_004:0354b11_0": "圓悟的骨孫。",
    "X70n1386_004:0354b11_1": "[仁二+幼]堂破家兒。",
    "X70n1386_004:0354b11_2": "住山鈯斧子。",
    "X70n1386_004:0354b11_3": "六七處提持。",
    "X70n1386_004:0354b12_0": "歲晚力辭佛日。",
    "X70n1386_004:0354b12_1": "歸掃靈山室。",
    "X70n1386_004:0354b12_2": "重拈栗棘金圈。",
    "X70n1386_004:0354b12_3": "拶得〔一〕衲僧上壁。",
    "X70n1386_004:0354b13_4": "等閑時節至。",
    "X70n1386_004:0354b13_5": "撒手臥長空。",
    "X70n1386_004:0354b13_6": "髑髏山後。",
    "X70n1386_004:0354b13_7": "信息不通。",
    "X70n1386_004:0354b14_8": "瞿曇十五日便恁麼。",
    "X70n1386_004:0354b14_9": "喝堂十六日也恁麼。",
    "X70n1386_004:0354b14_10": "遊戱死生。",
    "X70n1386_004:0354b15_11": "無可不可。",
    "X70n1386_004:0354b15_12": "無可不可。",
    "X70n1386_004:0354b15_13": "八面玲瓏。",
    "X70n1386_004:0354b15_14": "楊岐驢倒跨。",
    "X70n1386_004:0354b15_15": "踏殺丙丁童。",
    "X70n1386_004:0354b17_0": "為燈上座入塔",
    "X70n1386_004:0354b18_0": "室內一盞明燈。",
    "X70n1386_004:0354b18_1": "三人證龜成鼈。",
    "X70n1386_004:0354b18_2": "只因這个話頭。",
    "X70n1386_004:0354b18_3": "萬里奔南走北。",
    "X70n1386_004:0354b19_4": "如今油盡燈殘。",
    "X70n1386_004:0354b19_5": "覰見本來無物。",
    "X70n1386_004:0354b19_6": "(某人)既是本來無物。",
    "X70n1386_004:0354b20_7": "且道。",
    "X70n1386_004:0354b20_8": "這个作麼生商量。",
    "X70n1386_004:0354b20_9": "日月不到處。",
    "X70n1386_004:0354b20_10": "特地好風光。",
    "X70n1386_004:0354b22_0": "為遠首座下火",
    "X70n1386_004:0354b23_0": "鍾山後板曾分座。",
    "X70n1386_004:0354b23_1": "慧日峰前又聚頭。",
    "X70n1386_004:0354b23_2": "夢裏翻身忽知有。",
    "X70n1386_004:0354b24_3": "橫吹玉笛過滄洲。",
    "X70n1386_004:0354b24_4": "遠首座住住。",
    "X70n1386_004:0354b24_5": "南山有語重分付。",
    "X70n1386_004:0354c01_0": "且道。",
    "X70n1386_004:0354c01_1": "分付个什麼。",
    "X70n1386_004:0354c01_2": "海底火燒天。",
    "X70n1386_004:0354c01_3": "逢人莫錯舉。",
    "X70n1386_004:0354c02_0": "為紹宗上座下火",
    "X70n1386_004:0354c03_0": "是何宗。",
    "X70n1386_004:0354c03_1": "作麼生紹。",
    "X70n1386_004:0354c03_2": "百尺竿頭。",
    "X70n1386_004:0354c03_3": "放開兩手。",
    "X70n1386_004:0354c03_4": "了了了無可了。",
    "X70n1386_004:0354c04_5": "打銕不離火星。",
    "X70n1386_004:0354c04_6": "目前一任[跳兆+孛]跳。",
    "X70n1386_004:0354c05_0": "為清上座下火(廣州)",
    "X70n1386_004:0354c06_0": "鎮海明珠。",
    "X70n1386_004:0354c06_1": "絕無瑕纇。",
    "X70n1386_004:0354c06_2": "脚跨南山。",
    "X70n1386_004:0354c06_3": "親遭擊碎。",
    "X70n1386_004:0354c06_4": "既擊碎須領會。",
    "X70n1386_004:0354c07_5": "前路逢人索此珠。",
    "X70n1386_004:0354c07_6": "一揮石火青天外。",
    "X70n1386_004:0354c08_0": "為月藏主下火",
    "X70n1386_004:0354c09_0": "大藏小藏。",
    "X70n1386_004:0354c09_1": "半月滿月。",
    "X70n1386_004:0354c09_2": "和底盡掀翻。",
    "X70n1386_004:0354c09_3": "萬里一條鐵。",
    "X70n1386_004:0354c09_4": "便恁麼未親切。",
    "X70n1386_004:0354c10_5": "山僧口似磉盤。",
    "X70n1386_004:0354c10_6": "却聽火把饒舌。",
    "X70n1386_004:0354c11_0": "為辨藏主下火",
    "X70n1386_004:0354c12_0": "辯瀉黃河。",
    "X70n1386_004:0354c12_1": "已落第二。",
    "X70n1386_004:0354c12_2": "口挂壁上。",
    "X70n1386_004:0354c12_3": "雷聲震地。",
    "X70n1386_004:0354c12_4": "个裏綽得便行。",
    "X70n1386_004:0354c13_5": "毫髮不容擬議。",
    "X70n1386_004:0354c13_6": "脚下烟生。",
    "X70n1386_004:0354c13_7": "頭上火起。",
    "X70n1386_004:0354c14_0": "為林上座下火",
    "X70n1386_004:0354c15_0": "玻璃江上方發足。",
    "X70n1386_004:0354c15_1": "飛來峰下便抽單。",
    "X70n1386_004:0354c15_2": "不涉程途一句子。",
    "X70n1386_004:0354c16_3": "烈焰堆中斫額看。",
    "X70n1386_004:0354c17_0": "為燈上座下火",
    "X70n1386_004:0354c18_0": "不受燃燈記。",
    "X70n1386_004:0354c18_1": "不參閑達磨。",
    "X70n1386_004:0354c18_2": "生死牢關。",
    "X70n1386_004:0354c18_3": "一拳打破。",
    "X70n1386_004:0354c18_4": "饒你如是。",
    "X70n1386_004:0354c19_5": "也未放過。",
    "X70n1386_004:0354c19_6": "直須隔山見煙。",
    "X70n1386_004:0354c19_7": "不用鑽氷求火。",
    "X70n1386_004:0354c20_0": "為小師贊上人下火",
    "X70n1386_004:0354c21_0": "一病纏身竟弗瘳。",
    "X70n1386_004:0354c21_1": "室中又減鞠多籌。",
    "X70n1386_004:0354c21_2": "須彌那畔重開眼。",
    "X70n1386_004:0354c22_3": "要見精金火裏求。",
    "X70n1386_004:0354c23_0": "為珍上座下火",
    "X70n1386_004:0354c24_0": "從門入者。",
    "X70n1386_004:0354c24_1": "不是家珍。",
    "X70n1386_004:0354c24_2": "不從門入者。",
    "X70n1386_004:0354c24_3": "亦未是家珍。",
    "X70n1386_004:0354c24_4": "恁麼則埋沒先聖。",
    "X70n1386_004:0355a01_5": "不恁麼則辜負己靈。",
    "X70n1386_004:0355a01_6": "珍禪人。",
    "X70n1386_004:0355a01_7": "當爐不避火。",
    "X70n1386_004:0355a02_8": "春來草自青。",
    "X70n1386_004:0355a03_0": "為文侍者下火",
    "X70n1386_004:0355a04_0": "生佛未具。",
    "X70n1386_004:0355a04_1": "文彩已彰。",
    "X70n1386_004:0355a04_2": "髑髏覷破絕依倚。",
    "X70n1386_004:0355a04_3": "跳出無魔必死鄉。",
    "X70n1386_004:0355a05_4": "且道。",
    "X70n1386_004:0355a05_5": "跳出後如何。",
    "X70n1386_004:0355a05_6": "優曇開火聚。",
    "X70n1386_004:0355a05_7": "嗅著不聞香。",
    "X70n1386_004:0355a06_0": "為秀禪客下火",
    "X70n1386_004:0355a07_0": "多年立戰。",
    "X70n1386_004:0355a07_1": "口觜嘮嘈。",
    "X70n1386_004:0355a07_2": "頭頭有路。",
    "X70n1386_004:0355a07_3": "步步升高。",
    "X70n1386_004:0355a07_4": "貪程太速。",
    "X70n1386_004:0355a08_0": "攧這一交。",
    "X70n1386_004:0355a08_1": "攧則攧了也。",
    "X70n1386_004:0355a08_2": "還記得昨日話頭麼。",
    "X70n1386_004:0355a08_3": "舉火云。",
    "X70n1386_004:0355a09_0": "雖然眉毛只在。",
    "X70n1386_004:0355a09_1": "爭奈鼻孔已焦。",
    "X70n1386_004:0355a10_0": "為太法公下火",
    "X70n1386_004:0355a11_0": "不書壁間偈。",
    "X70n1386_004:0355a11_1": "不傳夜半衣。",
    "X70n1386_004:0355a11_2": "六十三年空守。",
    "X70n1386_004:0355a11_3": "幾莖白髮垂垂。",
    "X70n1386_004:0355a12_4": "時節既至。",
    "X70n1386_004:0355a12_5": "忽爾知歸。",
    "X70n1386_004:0355a12_6": "推倒那邊無影樹。",
    "X70n1386_004:0355a12_7": "却來火"
}