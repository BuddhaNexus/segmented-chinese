[
    {
        "source_sentence": "佛頂放無垢光明入普門觀察一",
        "from": "T19n1025_001:0721c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切如來心陀羅尼經卷上",
        "from": "T19n1025_001:0721c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天北印度烏填曩國帝釋宮",
        "from": "T19n1025_001:0721c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺三藏傳法大師賜紫沙門臣施護奉　詔譯如是我聞。",
        "from": "T19n1025_001:0721c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊。",
        "from": "T19n1025_001:0721c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在覩史天宮。",
        "from": "T19n1025_001:0721c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩眾并諸眷屬及諸天眾梵王那羅延天大自在天最先天子等大眾皆來集會。",
        "from": "T19n1025_001:0721c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊依六波羅蜜說法。",
        "from": "T19n1025_001:0721c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂檀波羅蜜。",
        "from": "T19n1025_001:0721c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施果報得大福德聚。",
        "from": "T19n1025_001:0721c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得不退轉自在。",
        "from": "T19n1025_001:0721c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天雨七寶不求自得。",
        "from": "T19n1025_001:0721c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大伏藏自然出現。",
        "from": "T19n1025_001:0721c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說尸波羅蜜。",
        "from": "T19n1025_001:0721c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂淨戒果報。",
        "from": "T19n1025_001:0721c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得五通而生梵天。",
        "from": "T19n1025_001:0721c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說羼提波羅蜜。",
        "from": "T19n1025_001:0721c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂忍辱果報得天色相。",
        "from": "T19n1025_001:0721c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙好莊嚴一切樂見。",
        "from": "T19n1025_001:0721c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說毘梨耶波羅蜜。",
        "from": "T19n1025_001:0721c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂欲修精進。",
        "from": "T19n1025_001:0721c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使彼魔王見者降伏。",
        "from": "T19n1025_001:0721c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得果報超出生死。",
        "from": "T19n1025_001:0721c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽然之間遊翫佛剎。",
        "from": "T19n1025_001:0721c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說禪波羅蜜。",
        "from": "T19n1025_001:0721c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂淨慮果報獲得首楞嚴三摩地。",
        "from": "T19n1025_001:0721c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得無數百千俱胝那由多三摩地。",
        "from": "T19n1025_001:0721c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說般若波羅蜜。",
        "from": "T19n1025_001:0721c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂智慧果報得大福聚。",
        "from": "T19n1025_001:0721c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲彼多聞廣大如海。",
        "from": "T19n1025_001:0721c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彼天眾等聞此六波羅蜜法已。",
        "from": "T19n1025_001:0721c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心大歡喜晝夜思惟修行觀察。",
        "from": "T19n1025_001:0721c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時右忉利天子名摩尼藏無垢。",
        "from": "T19n1025_001:0721c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與百千俱胝天子眷屬萬八千天女眷屬。",
        "from": "T19n1025_001:0721c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并天宮殿神通變化。",
        "from": "T19n1025_001:0721c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶莊嚴高妙樓閣。",
        "from": "T19n1025_001:0721c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種宮殿種種園苑。",
        "from": "T19n1025_001:0721c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "池沼華果皆悉嚴飾。",
        "from": "T19n1025_001:0721c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼摩尼藏無垢天子。",
        "from": "T19n1025_001:0721c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與妙俱蘇摩華天女。",
        "from": "T19n1025_001:0721c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極相愛樂行坐相隨受天快樂。",
        "from": "T19n1025_001:0721c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於七寶四門殿中。",
        "from": "T19n1025_001:0722a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受五慾樂迷醉耽著。",
        "from": "T19n1025_001:0722a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示其我慢恣彼睡眠。",
        "from": "T19n1025_001:0722a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼摩尼藏無垢天子。",
        "from": "T19n1025_001:0722a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於中夜分睡夢之間。",
        "from": "T19n1025_001:0722a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天女奏妙音樂。",
        "from": "T19n1025_001:0722a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼宮殿有炬口天藥叉而乃發聲。",
        "from": "T19n1025_001:0722a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸彼摩尼藏無垢天子作如是言。",
        "from": "T19n1025_001:0722a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼藏無垢云何愛樂宮殿耽著睡眠。",
        "from": "T19n1025_001:0722a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都不覺悟而復安住。",
        "from": "T19n1025_001:0722a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝天當知快樂不久。",
        "from": "T19n1025_001:0722a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要後七日命必無常。",
        "from": "T19n1025_001:0722a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖天快樂七寶宮殿殊妙無比。",
        "from": "T19n1025_001:0722a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而汝命盡須臾莫留。",
        "from": "T19n1025_001:0722a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯事真實當自思惟宜速方便。",
        "from": "T19n1025_001:0722a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時炬口天藥叉說是語已忽然不現。",
        "from": "T19n1025_001:0722a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時摩尼藏無垢天子。",
        "from": "T19n1025_001:0722a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此語已心極苦惱。",
        "from": "T19n1025_001:0722a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如迷醉悶絕而倒。",
        "from": "T19n1025_001:0722a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面目著地僵仆而臥。",
        "from": "T19n1025_001:0722a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時天女眾見此事已。",
        "from": "T19n1025_001:0722a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆愁憂啼泣雨淚。",
        "from": "T19n1025_001:0722a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慞惶怕怖苦惱千種。",
        "from": "T19n1025_001:0722a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復見彼天頭髮蓬亂。",
        "from": "T19n1025_001:0722a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣服瓔珞諸嚴身具。",
        "from": "T19n1025_001:0722a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉棄一邊。",
        "from": "T19n1025_001:0722a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面目血染唇口乾燋。",
        "from": "T19n1025_001:0722a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倍復愁惱而稱苦哉。",
        "from": "T19n1025_001:0722a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如火燒心悶絕倒地。",
        "from": "T19n1025_001:0722a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦有迷亂而失心者。",
        "from": "T19n1025_001:0722a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦有如魚失水宛轉在地者。",
        "from": "T19n1025_001:0722a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種愁歎號哭呼天。",
        "from": "T19n1025_001:0722a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中有不失心者。",
        "from": "T19n1025_001:0722a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以天寶器盛新冷水。",
        "from": "T19n1025_001:0722a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及栴檀香散灑其身。",
        "from": "T19n1025_001:0722a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復為理髮髻或整其衣或捧其足。",
        "from": "T19n1025_001:0722a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時摩尼藏無垢天子漸還惺悟。",
        "from": "T19n1025_001:0722a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既惺悟已良久之間。",
        "from": "T19n1025_001:0722a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口稱大苦極甚憂惱。",
        "from": "T19n1025_001:0722a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎息長噓身體戰悚。",
        "from": "T19n1025_001:0722a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如風吹草傾側不定。",
        "from": "T19n1025_001:0722a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語聲微細乃發其心。",
        "from": "T19n1025_001:0722a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今速疾往帝釋天所。",
        "from": "T19n1025_001:0722a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既到彼已禮帝釋足作如是言。",
        "from": "T19n1025_001:0722a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天主救我天主救我。",
        "from": "T19n1025_001:0722a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說如上事聞炬口天藥叉言。",
        "from": "T19n1025_001:0722a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我後七日必當命終。",
        "from": "T19n1025_001:0722a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我思地獄眾苦逼惱。",
        "from": "T19n1025_001:0722a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是急速來白天主。",
        "from": "T19n1025_001:0722a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作何方便而得解脫。",
        "from": "T19n1025_001:0722a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我不死不墮惡道。",
        "from": "T19n1025_001:0722a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天主願作救護令離死苦。",
        "from": "T19n1025_001:0722a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是告已。",
        "from": "T19n1025_001:0722a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主聞此說已。",
        "from": "T19n1025_001:0722a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知心苦切告摩尼藏無垢天子言。",
        "from": "T19n1025_001:0722b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿怖摩尼藏無垢。",
        "from": "T19n1025_001:0722b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有佛世尊天人之師無上之士出現於世。",
        "from": "T19n1025_001:0722b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有法藥能救生老病死及以煩惱。",
        "from": "T19n1025_001:0722b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離地獄乃至一切惡趣而令破壞。",
        "from": "T19n1025_001:0722b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼父母能救濟汝。",
        "from": "T19n1025_001:0722b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今告汝。",
        "from": "T19n1025_001:0722b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大覺世尊在覩史多宮汝可急去。",
        "from": "T19n1025_001:0722b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主。",
        "from": "T19n1025_001:0722b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與摩尼藏無垢天子。",
        "from": "T19n1025_001:0722b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及無數千天女。",
        "from": "T19n1025_001:0722b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往覩史多宮詣世尊所。",
        "from": "T19n1025_001:0722b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到彼所已頭面著地禮世尊足。",
        "from": "T19n1025_001:0722b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋遶三匝住世尊前。",
        "from": "T19n1025_001:0722b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主憂愁萎悴白世尊言。",
        "from": "T19n1025_001:0722b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼炬口天藥叉告摩尼藏無垢天子言。",
        "from": "T19n1025_001:0722b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝後七日必當命終。",
        "from": "T19n1025_001:0722b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊作何方便而令修行得免斯苦。",
        "from": "T19n1025_001:0722b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊聞帝釋天主言已。",
        "from": "T19n1025_001:0722b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作思惟見是事已。",
        "from": "T19n1025_001:0722b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於口中放種種色光。",
        "from": "T19n1025_001:0722b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光遍照三千大千世界。",
        "from": "T19n1025_001:0722b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天人及龍犍闥婆阿素洛㜸嚕茶緊那囉摩護囉誐藥叉羅剎步多宮殿。",
        "from": "T19n1025_001:0722b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光照告已。",
        "from": "T19n1025_001:0722b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光還復到於佛所。",
        "from": "T19n1025_001:0722b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶佛三匝還從口入。",
        "from": "T19n1025_001:0722b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時世尊告帝釋天主言。",
        "from": "T19n1025_001:0722b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽天主。",
        "from": "T19n1025_001:0722b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼摩尼藏無垢天子。",
        "from": "T19n1025_001:0722b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日之後決定命終。",
        "from": "T19n1025_001:0722b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮地獄受大苦惱。",
        "from": "T19n1025_001:0722b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛楚無量甚大怖畏。",
        "from": "T19n1025_001:0722b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出地獄已復生人間。",
        "from": "T19n1025_001:0722b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於波羅奈城竹匠之家。",
        "from": "T19n1025_001:0722b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生溷廁中為猪面女鬼恒食糞尿。",
        "from": "T19n1025_001:0722b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼溷廁中復有百千俱胝蛆蟲。",
        "from": "T19n1025_001:0722b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以三時𠯗食女鬼。",
        "from": "T19n1025_001:0722b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身肉都盡唯存其骨。",
        "from": "T19n1025_001:0722b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以業力故而其身肉旋復平滿受如是身滿七年已。",
        "from": "T19n1025_001:0722b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後命終復生龜中住於曠野。",
        "from": "T19n1025_001:0722b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼曠野中不聞水名況復其水。",
        "from": "T19n1025_001:0722b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又無樹木亦無陰涼。",
        "from": "T19n1025_001:0722b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常處日中身體如燒唯食熱土。",
        "from": "T19n1025_001:0722b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復被烏喙其身片片墮落。",
        "from": "T19n1025_001:0722b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以業力故身體隨生尋復破裂。",
        "from": "T19n1025_001:0722b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受如是苦滿五年已然後命終。",
        "from": "T19n1025_001:0722b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於彼城生於魚中其身廣大。",
        "from": "T19n1025_001:0722b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以業力故墮無水處。",
        "from": "T19n1025_001:0722c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼豺狼鼠狗及泥卑迦獸咸取食之。",
        "from": "T19n1025_001:0722c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有種種禽獸亦來食噉。",
        "from": "T19n1025_001:0722c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以業力故而得其水。",
        "from": "T19n1025_001:0722c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋復還活又生身體。",
        "from": "T19n1025_001:0722c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受如是苦至滿三年然後命終。",
        "from": "T19n1025_001:0722c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於闍浮提內七族中生。",
        "from": "T19n1025_001:0722c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常多苦惱。",
        "from": "T19n1025_001:0722c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂白癩種族。",
        "from": "T19n1025_001:0722c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "補羯娑種族。",
        "from": "T19n1025_001:0722c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛󰪯囉怛哩迦種族。",
        "from": "T19n1025_001:0722c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𭢱切身嚩種族。",
        "from": "T19n1025_001:0722c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魁膾種族。",
        "from": "T19n1025_001:0722c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生盲種族。",
        "from": "T19n1025_001:0722c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受斯惡報滿六十年。",
        "from": "T19n1025_001:0722c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後復生貧窮下賤之族。",
        "from": "T19n1025_001:0722c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身肢不具智慧乏少。",
        "from": "T19n1025_001:0722c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不從教誨遠佛法僧。",
        "from": "T19n1025_001:0722c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世人見者憎惡。",
        "from": "T19n1025_001:0722c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒常飢渴復多疾病。",
        "from": "T19n1025_001:0722c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主。",
        "from": "T19n1025_001:0722c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛世尊說此摩尼藏無垢天子諸苦事已。",
        "from": "T19n1025_001:0722c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極大驚怖而復迷悶。",
        "from": "T19n1025_001:0722c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言無有救者。",
        "from": "T19n1025_001:0722c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如不憫救誰是救者。",
        "from": "T19n1025_001:0722c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊告言帝釋天主。",
        "from": "T19n1025_001:0722c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃有陀羅尼名佛頂放無垢光明入普門觀察一切如來心。",
        "from": "T19n1025_001:0722c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯乃救者。",
        "from": "T19n1025_001:0722c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常最大彼難求免求亦得免。",
        "from": "T19n1025_001:0722c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼彼有情後時後分命終之時獲得安樂。",
        "from": "T19n1025_001:0722c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若命終後墮落一切地獄傍生之者悉得解脫。",
        "from": "T19n1025_001:0722c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常憶念一切障難獲得永離。",
        "from": "T19n1025_001:0722c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得長壽善願圓滿。",
        "from": "T19n1025_001:0722c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復獲見自性清淨。",
        "from": "T19n1025_001:0722c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主四大天王梵王那羅延天及大自在等。",
        "from": "T19n1025_001:0722c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬白世尊言。",
        "from": "T19n1025_001:0722c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊願為我等而作增益擁護諸天。",
        "from": "T19n1025_001:0722c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊又若法王以三昧力。",
        "from": "T19n1025_001:0722c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救濟世間一切人民。",
        "from": "T19n1025_001:0722c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至地獄惡趣悉皆解脫。",
        "from": "T19n1025_001:0722c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如彼忉利天宮。",
        "from": "T19n1025_001:0722c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察四洲世界一切眾生。",
        "from": "T19n1025_001:0722c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來有大智慧。",
        "from": "T19n1025_001:0722c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願為世間周遍十方。",
        "from": "T19n1025_001:0722c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與我等賜以法印作大擁護。",
        "from": "T19n1025_001:0722c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦牟尼如來受彼諸天慇懃再請。",
        "from": "T19n1025_001:0722c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃入三摩地名周遍相觀察。",
        "from": "T19n1025_001:0722c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入彼三摩地時。",
        "from": "T19n1025_001:0722c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂髻中放遍相光明。",
        "from": "T19n1025_001:0723a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍照曜十方世界。",
        "from": "T19n1025_001:0723a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還住虛空如寶傘蓋。",
        "from": "T19n1025_001:0723a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊熟視帝釋而告之言。",
        "from": "T19n1025_001:0723a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋天主諦聽諦聽。",
        "from": "T19n1025_001:0723a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有法印名佛頂放無垢光明入普門觀察一切如來心三摩耶陀羅尼。",
        "from": "T19n1025_001:0723a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是九十九百千俱胝那由多殑伽沙如來同所宣說。",
        "from": "T19n1025_001:0723a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼若有眾生。",
        "from": "T19n1025_001:0723a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得見聞隨喜者。",
        "from": "T19n1025_001:0723a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有三世一切罪業。",
        "from": "T19n1025_001:0723a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮地獄惡趣乃至傍生。",
        "from": "T19n1025_001:0723a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆破滅怖畏解脫。",
        "from": "T19n1025_001:0723a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪障悉得消除。",
        "from": "T19n1025_001:0723a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼大火焚燒乾草。",
        "from": "T19n1025_001:0723a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風吹灰燼須臾散滅。",
        "from": "T19n1025_001:0723a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如天降大雨其水急流。",
        "from": "T19n1025_001:0723a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山河草木一切穢惡倏然清淨。",
        "from": "T19n1025_001:0723a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如真金從火烹鍊。",
        "from": "T19n1025_001:0723a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倍復柔軟方成諸器。",
        "from": "T19n1025_001:0723a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有持誦此陀羅尼者。",
        "from": "T19n1025_001:0723a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸疑惑。",
        "from": "T19n1025_001:0723a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自見己身三業清淨。",
        "from": "T19n1025_001:0723a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如日出光明普照。",
        "from": "T19n1025_001:0723a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如失水之魚還復得水。",
        "from": "T19n1025_001:0723a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依水而住復受快樂。",
        "from": "T19n1025_001:0723a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復世間一切眾生。",
        "from": "T19n1025_001:0723a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常能誦念此陀羅尼者。",
        "from": "T19n1025_001:0723a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於壽命倍得增益。",
        "from": "T19n1025_001:0723a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天主諦聽諦受。",
        "from": "T19n1025_001:0723a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T19n1025_001:0723a17_18",
        "context_with_next_sentence": true
    },
    {
