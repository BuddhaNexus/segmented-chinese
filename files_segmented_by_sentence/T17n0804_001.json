[
    {
        "source_sentence": "佛說解憂經",
        "from": "T17n0804_001:0749b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T17n0804_001:0749b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教大師臣法天奉　詔譯",
        "from": "T17n0804_001:0749b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首歸依正等覺，　　能度無邊大苦海。",
        "from": "T17n0804_001:0749b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒以甘露潤群生，　　令得涅槃我頂禮。",
        "from": "T17n0804_001:0749b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首歸依正法藏，　　能止無邊苦惱因，",
        "from": "T17n0804_001:0749b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯示過失利眾生，　　令獲寂靜我頂禮。",
        "from": "T17n0804_001:0749b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首歸依大苾芻，　　能與世間為福聚，",
        "from": "T17n0804_001:0749b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發行勤修安樂因，　　善斷輪迴我頂禮。",
        "from": "T17n0804_001:0749b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛別離最苦，　　憂火鎮燒然，",
        "from": "T17n0804_001:0749b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲自安心，　　端居作觀想。",
        "from": "T17n0804_001:0749b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如群鳥獸，　　暫聚各分飛，",
        "from": "T17n0804_001:0749b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死人亦然，　　云何懷憂苦？",
        "from": "T17n0804_001:0749b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只自一有死，　　眾人皆長生，",
        "from": "T17n0804_001:0749b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別離痛不任，　　親姻須啼泣。",
        "from": "T17n0804_001:0749b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界大輪迴，　　無有免斯者，",
        "from": "T17n0804_001:0749b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等受無常，　　云何懷憂苦？",
        "from": "T17n0804_001:0749b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人生貪愛，　　孰知貪火燒，",
        "from": "T17n0804_001:0749b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼犛牛身，　　愛尾遭人殺。",
        "from": "T17n0804_001:0749b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人多迷醉，　　欲逃嶮惡道，",
        "from": "T17n0804_001:0749b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設盡方便心，　　不能免離苦。",
        "from": "T17n0804_001:0749b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼野麞鹿，　　常被師子逐，",
        "from": "T17n0804_001:0749b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟不能逃，　　云何懷憂苦？",
        "from": "T17n0804_001:0749b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地及天上，　　三界與四生，",
        "from": "T17n0804_001:0749b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未曾得見聞，　　不受無常者。",
        "from": "T17n0804_001:0749b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如山野火，　　焚燒草木時，",
        "from": "T17n0804_001:0749b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不擇花果林，　　俱時成灰燼。",
        "from": "T17n0804_001:0749c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡諸眾生，　　顛倒生妄想，",
        "from": "T17n0804_001:0749c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身繫無常繩，　　無人能可解。",
        "from": "T17n0804_001:0749c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色界梵世中，　　禪味為安樂，",
        "from": "T17n0804_001:0749c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如樹臨河，　　不久風水壞。",
        "from": "T17n0804_001:0749c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百億轉輪王，　　千萬天帝釋，",
        "from": "T17n0804_001:0749c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念即無常，　　如風吹燈焰。",
        "from": "T17n0804_001:0749c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去大神仙，　　五通心自在，",
        "from": "T17n0804_001:0749c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往復騰空行，　　猶被無常取。",
        "from": "T17n0804_001:0749c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛堅固身，　　尚自示寂滅，",
        "from": "T17n0804_001:0749c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡識如芭蕉，　　云何欲久住？",
        "from": "T17n0804_001:0749c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地妙高山，　　及以四大海，",
        "from": "T17n0804_001:0749c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫壞亦歸空，　　何況眾生趣！",
        "from": "T17n0804_001:0749c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍居深海裏，　　眷屬常圍繞，",
        "from": "T17n0804_001:0749c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金翅鳥能食，　　別離苦亦爾。",
        "from": "T17n0804_001:0749c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或人往他界，　　欲避於無常，",
        "from": "T17n0804_001:0749c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如入摩竭魚，　　口中求安隱。",
        "from": "T17n0804_001:0749c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是欲色界，　　及彼非非想，",
        "from": "T17n0804_001:0749c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未有於一物，　　不被無常吞。",
        "from": "T17n0804_001:0749c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有正等覺，　　是真依仗處，",
        "from": "T17n0804_001:0749c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信受汝諦聽，　　能解諸憂惱。",
        "from": "T17n0804_001:0749c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞：",
        "from": "T17n0804_001:0749c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國祇樹給孤獨園。",
        "from": "T17n0804_001:0749c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告苾芻言：",
        "from": "T17n0804_001:0749c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「眾生無數，輪迴無邊，如蟻循環，無有窮盡。",
        "from": "T17n0804_001:0749c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生貪愛，無明障閉，如陷泥中，而不能出。",
        "from": "T17n0804_001:0749c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去有情，輪迴往復，數不能知。",
        "from": "T17n0804_001:0749c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻！",
        "from": "T17n0804_001:0749c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有大地之土都聚一處，和為泥丸，大小如豆，數彼眾生無始劫來所生父母子孫，每一人下一泥丸，如是泥丸下盡，父母子孫數不能盡。",
        "from": "T17n0804_001:0749c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻！",
        "from": "T17n0804_001:0749c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是無邊輪迴眾生，貪愛無明，顛倒陷愛欲泥中，生死輪迴，不知其數，是故令汝學斷輪迴。",
        "from": "T17n0804_001:0750a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0804_001:0750a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「苾芻！",
        "from": "T17n0804_001:0750a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是補特伽羅輪迴眾生以骨作聚，如妙高山，不壞不爛。",
        "from": "T17n0804_001:0750a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是無學聲聞，證四聖諦，了知此苦，真實為苦、苦滅，證苦聖諦。",
        "from": "T17n0804_001:0750a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼補特伽羅見此屍骨不知是苦，亦不能滅三界煩惱。",
        "from": "T17n0804_001:0750a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若滅三界煩惱，證須陀洹不空法，決定得菩提。",
        "from": "T17n0804_001:0750a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由於七生天、人之中，作斷輪迴，除滅煩惱。",
        "from": "T17n0804_001:0750a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七生滿已，聖諦現前，正見智慧，滅盡餘惑，到涅槃寂靜，彼補特伽羅方得解脫輪迴之苦！",
        "from": "T17n0804_001:0750a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0804_001:0750a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「苾芻！",
        "from": "T17n0804_001:0750a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人眷屬，互相愛樂。",
        "from": "T17n0804_001:0750a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以貪愛故，廣造諸業，生死輪迴。",
        "from": "T17n0804_001:0750a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如野象陷泥坑中，無有出期。",
        "from": "T17n0804_001:0750a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼眷屬，如恒河沙，父母養育，皆如親子。",
        "from": "T17n0804_001:0750a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至後世中，隨其報應，各各不同——或為僕從，或為冤家，互相瞋恨，欺辱打罵；",
        "from": "T17n0804_001:0750a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為傍類，互相食噉，或被殺害——如是種種，諸趣輪迴，如七仙眾，或聚或散；",
        "from": "T17n0804_001:0750a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如天雨，生其水漚，或生或滅。",
        "from": "T17n0804_001:0750a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾生，愚癡大力，迷惑顛倒，不了輪迴；",
        "from": "T17n0804_001:0750a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其眷屬，妄生樂想，造種種業，未有須臾得清淨住。",
        "from": "T17n0804_001:0750a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又彼有情，無始輪迴，入地獄中，所飲銅汁，過大海水；",
        "from": "T17n0804_001:0750a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼猪狗，食不淨物，如妙高山。",
        "from": "T17n0804_001:0750a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼有情，生死別離，愛戀泣淚，亦如海水。",
        "from": "T17n0804_001:0750a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼有情，更相殺害，積聚彼頭，過梵天界，虫食膿血，亦如海水。",
        "from": "T17n0804_001:0750a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又餓鬼趣，以宿慳貪，受飢渴苦，如遇飲食即成煙焰。",
        "from": "T17n0804_001:0750a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼報滿已，設生人中，貧窮飢困，種種苦惱，說不能盡。",
        "from": "T17n0804_001:0750a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又彼有情，以修福善，生忉利天等境界殊勝，恒受快樂；",
        "from": "T17n0804_001:0750a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪愛熾盛，如火燒乾草，報壽盡時，即墮惡趣。",
        "from": "T17n0804_001:0750a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如飛禽折其兩翼，剎那落地，受種種苦。",
        "from": "T17n0804_001:0750b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故汝等，學斷輪迴，速求解脫。",
        "from": "T17n0804_001:0750b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0804_001:0750b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「苾芻！",
        "from": "T17n0804_001:0750b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如江河、大地、日月、星辰、須彌盧山及諸聚落世界，未壞而得久住，常在世間。",
        "from": "T17n0804_001:0750b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此經典亦復如是，世界未壞，法亦久住。",
        "from": "T17n0804_001:0750b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於意云何？",
        "from": "T17n0804_001:0750b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為與一切有情止息輪迴故。",
        "from": "T17n0804_001:0750b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」苾芻聞已，信受奉行。",
        "from": "T17n0804_001:0750b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說解憂經",
        "from": "T17n0804_001:0750b07_100",
        "context_with_next_sentence": false
    }
]