[
    {
        "source_sentence": "佛說布施經",
        "from": "T16n0705_001:0812c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T16n0705_001:0812c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T16n0705_001:0812c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T16n0705_001:0812c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國祇樹給孤獨園，與大苾芻眾說布施法。",
        "from": "T16n0705_001:0812c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三十七種：",
        "from": "T16n0705_001:0812c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、以信、重心而行布施，當得離眾嫉妬，人所崇敬；",
        "from": "T16n0705_001:0812c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二、依時施，得三業清淨，四時安隱；",
        "from": "T16n0705_001:0812c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三、常行施，得身心適悅，無散亂失；",
        "from": "T16n0705_001:0812c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四、親手施，得手指纖長，身相端正；",
        "from": "T16n0705_001:0812c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五、為他施，復得他人行大捨施；",
        "from": "T16n0705_001:0812c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六、依教施，心離取相，得無為福；",
        "from": "T16n0705_001:0812c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七、以妙色具施，得身色端嚴，眾所愛樂；",
        "from": "T16n0705_001:0812c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八、以上妙香具施，恒得旃檀之香，受用供養；",
        "from": "T16n0705_001:0812c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九、以上味施，得味中上味，充益肢體；",
        "from": "T16n0705_001:0812c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十、如法尊重施，得安隱快樂，眾人喜見；",
        "from": "T16n0705_001:0812c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一、以廣大心施，得無量廣大之福；",
        "from": "T16n0705_001:0812c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二、以美食施，得離飢饉，倉庫盈溢；",
        "from": "T16n0705_001:0812c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三、以漿飲施，得所往之處無諸飢渴；",
        "from": "T16n0705_001:0812c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四、以衣服施，得上妙衣，莊嚴身相；",
        "from": "T16n0705_001:0812c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五、以住處施，得田宅寬廣，樓閣莊嚴；",
        "from": "T16n0705_001:0812c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六、以臥具施，得生貴族，資具光潔；",
        "from": "T16n0705_001:0812c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七、以象、馬車輦施，得四神足，無擁妙用；",
        "from": "T16n0705_001:0812c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八、以湯藥施，得安隱快樂，無諸疾病；",
        "from": "T16n0705_001:0813a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九、以經法施，得宿命等通；",
        "from": "T16n0705_001:0813a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十、以花果施，得七覺支花；",
        "from": "T16n0705_001:0813a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十一、以花鬘施，得脫貪、瞋、癡垢；",
        "from": "T16n0705_001:0813a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十二、以香施，得離煩惱臭穢；",
        "from": "T16n0705_001:0813a03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十三、以傘蓋施，得法自在；",
        "from": "T16n0705_001:0813a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十四、以鈴鐸施，得言音美妙；",
        "from": "T16n0705_001:0813a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十五、以音樂施，得梵音深妙；",
        "from": "T16n0705_001:0813a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十六、以然燈施，得天眼清淨；",
        "from": "T16n0705_001:0813a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十七、以繒綵、疋帛施，得解脫衣服；",
        "from": "T16n0705_001:0813a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八、以香水灑如來塔廟；",
        "from": "T16n0705_001:0813a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十九、以香水浴如來身；",
        "from": "T16n0705_001:0813a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十、以香油塗飾佛像，共得三十二相、八十種好；",
        "from": "T16n0705_001:0813a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十一、以香水施浴眾僧，得富貴家生，少病安樂；",
        "from": "T16n0705_001:0813a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十二、以慈心施，得顏貌和悅，無諸瞋恨；",
        "from": "T16n0705_001:0813a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十三、以悲心施，得離殺害；",
        "from": "T16n0705_001:0813a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十四、以喜心施，得無所畏，遠離憂惱；",
        "from": "T16n0705_001:0813a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十五、以捨心施，得離罣礙，證寂滅樂；",
        "from": "T16n0705_001:0813a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十六、以種種施，得種種福；",
        "from": "T16n0705_001:0813a14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十七、以無住、無相心施，得無上正等正覺。",
        "from": "T16n0705_001:0813a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告諸苾芻：",
        "from": "T16n0705_001:0813a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如是三十七種，智者所行。",
        "from": "T16n0705_001:0813a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微妙施行，汝今受持。",
        "from": "T16n0705_001:0813a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時舍衛國王白佛言：",
        "from": "T16n0705_001:0813a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T16n0705_001:0813a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等云何而行布施？",
        "from": "T16n0705_001:0813a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T16n0705_001:0813a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「大王！",
        "from": "T16n0705_001:0813a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求勝妙福報而行施時，慈心不殺，離諸嫉妬；",
        "from": "T16n0705_001:0813a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正見相應，遠於不善；",
        "from": "T16n0705_001:0813a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅持禁戒，親近善友；",
        "from": "T16n0705_001:0813a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉惡趣門，開生天路；",
        "from": "T16n0705_001:0813a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自利利他，其心平等。",
        "from": "T16n0705_001:0813a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如是施，是真布施，是大福田。",
        "from": "T16n0705_001:0813a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次行施，隨自心願，獲其報應。",
        "from": "T16n0705_001:0813a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以妙色、名香、珍味、軟觸親手布施，得眾人尊重、眷屬圓滿、富貴安樂之報；",
        "from": "T16n0705_001:0813a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以飲食布施，而得大力；",
        "from": "T16n0705_001:0813a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以酥油之燈布施，而得天眼；",
        "from": "T16n0705_001:0813a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以音樂布施，而得天耳；",
        "from": "T16n0705_001:0813a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以湯藥布施，而得長壽；",
        "from": "T16n0705_001:0813a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以住處布施，而得樓閣、田園；",
        "from": "T16n0705_001:0813a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以法說布施，而得甘露。",
        "from": "T16n0705_001:0813a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T16n0705_001:0813a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「大王！",
        "from": "T16n0705_001:0813a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以十善行施，復得十種報應：",
        "from": "T16n0705_001:0813b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十善者，不殺生、不偷盜、不婬欲、不妄語、不綺語、不惡口、不兩舌、不貪、不瞋、不癡，而得命不中夭、財無散失、眷屬清潔、所言誠諦、離諸嫉妬、人所喜見、親友和睦、不墮貧賤、顏貌端正、智慧相應。",
        "from": "T16n0705_001:0813b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲報如是。",
        "from": "T16n0705_001:0813b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T16n0705_001:0813b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「大王！",
        "from": "T16n0705_001:0813b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以上妙飲食供養三寶，得五種利益：",
        "from": "T16n0705_001:0813b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身相端嚴、氣力增盛、壽命延長、快樂安隱、成就辯才。",
        "from": "T16n0705_001:0813b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是南贍部洲一切眾生——父母、妻子、男女眷屬——如上布施，隨願所求，無不圓滿。",
        "from": "T16n0705_001:0813b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」說此法已，皆大歡喜，作禮而退。",
        "from": "T16n0705_001:0813b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說布施經",
        "from": "T16n0705_001:0813b12_100",
        "context_with_next_sentence": false
    }
]