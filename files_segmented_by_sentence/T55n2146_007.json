[
    {
        "source_sentence": "眾經總錄卷第七",
        "from": "T55n2146_007:0148c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋沙門法經等撰",
        "from": "T55n2146_007:0148c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上皇帝表大興善寺翻經眾沙門法經等敬白皇帝大檀",
        "from": "T55n2146_007:0148c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越。",
        "from": "T55n2146_007:0148c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去五月十日。",
        "from": "T55n2146_007:0148c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太常卿牛弘奉勅須撰眾經目錄。",
        "from": "T55n2146_007:0148c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經等謹即修撰。",
        "from": "T55n2146_007:0148c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總計眾經合有二千二百五十七部。",
        "from": "T55n2146_007:0148c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五千三百一十卷凡為七卷。",
        "from": "T55n2146_007:0148c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別錄六卷。",
        "from": "T55n2146_007:0148c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總錄一卷。",
        "from": "T55n2146_007:0148c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繕寫始竟。",
        "from": "T55n2146_007:0148c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹用進呈。",
        "from": "T55n2146_007:0148c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經等又敬白。",
        "from": "T55n2146_007:0148c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰惟無上法寶道洽無窮。",
        "from": "T55n2146_007:0148c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像運中途預被茲土。",
        "from": "T55n2146_007:0148c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔方朔覩昆明下灰。",
        "from": "T55n2146_007:0148c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令問西域取決。",
        "from": "T55n2146_007:0148c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉向校書。",
        "from": "T55n2146_007:0148c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天閣錄載。",
        "from": "T55n2146_007:0148c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已見佛經方知前漢之世正法久至。",
        "from": "T55n2146_007:0148c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非為後漢始流此地矣。",
        "from": "T55n2146_007:0148c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但自道淡情華真偽玄隔人尠宗敬。",
        "from": "T55n2146_007:0148c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有若亡。",
        "from": "T55n2146_007:0148c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又致明帝夢感金容現者。",
        "from": "T55n2146_007:0148c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當是聖道憑籍皇王。",
        "from": "T55n2146_007:0148c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大啟弘奉之端耳。",
        "from": "T55n2146_007:0148c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是發使西域專求佛經。",
        "from": "T55n2146_007:0148c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣此摩騰法蘭創出四十二章。",
        "from": "T55n2146_007:0148c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世高支讖廣譯諸餘經部。",
        "from": "T55n2146_007:0148c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是後通道之士相尋而至。",
        "from": "T55n2146_007:0148c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰暨魏晉京洛之日。",
        "from": "T55n2146_007:0148c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有支謙康會驟宣於金陵。",
        "from": "T55n2146_007:0148c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竺護蘭炬飛譯於雍洛。",
        "from": "T55n2146_007:0148c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而信敬尚簡奉行固微。",
        "from": "T55n2146_007:0148c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比逮東晉二秦之時經律粗備。",
        "from": "T55n2146_007:0148c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但法假人弘賢明日廣。",
        "from": "T55n2146_007:0148c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是道安法師創條諸經目錄。",
        "from": "T55n2146_007:0148c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銓品譯材的明時代。",
        "from": "T55n2146_007:0148c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求遺索缺備成錄體。",
        "from": "T55n2146_007:0148c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自爾達今二百年間。",
        "from": "T55n2146_007:0148c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "製經錄者十有數家。",
        "from": "T55n2146_007:0148c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以數求或用名取。",
        "from": "T55n2146_007:0148c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或憑時代或寄譯人。",
        "from": "T55n2146_007:0148c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各紀一隅務存所見。",
        "from": "T55n2146_007:0148c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨有楊州律師僧祐。",
        "from": "T55n2146_007:0148c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰三藏記錄頗近可觀。",
        "from": "T55n2146_007:0148c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然猶小大雷同三藏雜糅。",
        "from": "T55n2146_007:0149a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抄集參正傳記亂經。",
        "from": "T55n2146_007:0149a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "考始括終莫能該備。",
        "from": "T55n2146_007:0149a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自外諸錄胡可勝言。",
        "from": "T55n2146_007:0149a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧眾既未獲盡見三國經本校驗異同。",
        "from": "T55n2146_007:0149a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今唯且據諸家目錄。",
        "from": "T55n2146_007:0149a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刪簡可否總摽綱紀。",
        "from": "T55n2146_007:0149a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "位為九錄區別品類。",
        "from": "T55n2146_007:0149a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四十二分九初六錄三十六分。",
        "from": "T55n2146_007:0149a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略示經律三藏大小之殊。",
        "from": "T55n2146_007:0149a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粗顯傳譯是非真偽之別。",
        "from": "T55n2146_007:0149a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之三錄集傳記注。",
        "from": "T55n2146_007:0149a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前三分者並是西域聖賢所撰。",
        "from": "T55n2146_007:0149a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以非三藏正經故為別錄。",
        "from": "T55n2146_007:0149a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之三分並是此方名德所修。",
        "from": "T55n2146_007:0149a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不類西域所製。",
        "from": "T55n2146_007:0149a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫非毘贊正經。",
        "from": "T55n2146_007:0149a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發明宗教。",
        "from": "T55n2146_007:0149a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光輝前緒。",
        "from": "T55n2146_007:0149a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開進後學。",
        "from": "T55n2146_007:0149a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故兼載焉。",
        "from": "T55n2146_007:0149a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法經等更復竊思。",
        "from": "T55n2146_007:0149a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸家經錄多是前代賢哲修撰。",
        "from": "T55n2146_007:0149a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬度前賢靡不皆號一時稽古。",
        "from": "T55n2146_007:0149a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而所修撰不至詳審者。",
        "from": "T55n2146_007:0149a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非彼諸賢才不足而學不周。",
        "from": "T55n2146_007:0149a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直是所遇之日。",
        "from": "T55n2146_007:0149a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下分崩九牧無主。",
        "from": "T55n2146_007:0149a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名州大郡各號帝畿。",
        "from": "T55n2146_007:0149a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疆場艱關並為戰國。",
        "from": "T55n2146_007:0149a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經出所在悉不相知。",
        "from": "T55n2146_007:0149a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者遙聞終身莫覩。",
        "from": "T55n2146_007:0149a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故彼前哲雖有材能。",
        "from": "T55n2146_007:0149a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不逢時亦無所申述也。",
        "from": "T55n2146_007:0149a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當今經等識學誠不及古。",
        "from": "T55n2146_007:0149a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而宿緣多幸運屬休辰。",
        "from": "T55n2146_007:0149a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四海為家六合清泰。",
        "from": "T55n2146_007:0149a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊方異俗宛若目前。",
        "from": "T55n2146_007:0149a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正朔所班書軌無外。",
        "from": "T55n2146_007:0149a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又皇帝大檀越。",
        "from": "T55n2146_007:0149a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復親綜萬機。",
        "from": "T55n2146_007:0149a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而耽道終日興復三寶為法輪王。",
        "from": "T55n2146_007:0149a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永關四趣之門。",
        "from": "T55n2146_007:0149a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大啟天人之路。",
        "from": "T55n2146_007:0149a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在域群生莫不蒙賴。",
        "from": "T55n2146_007:0149a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而況經等。",
        "from": "T55n2146_007:0149a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫何復論所恨識慧無長猥參嘉運。",
        "from": "T55n2146_007:0149a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能盡獲三國經本及遺文逸法。",
        "from": "T55n2146_007:0149a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造次修撰多有罔昧。",
        "from": "T55n2146_007:0149a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進思退省慚慨良深。",
        "from": "T55n2146_007:0149a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬白開皇十四年七月十四日大興善寺翻經眾沙門法經等。",
        "from": "T55n2146_007:0149a27_5",
        "context_with_next_sentence": true
    },
