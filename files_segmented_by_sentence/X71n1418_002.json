{
    "X71n1418_002:0488c01_0": "呆菴莊禪師語錄卷之二",
    "X71n1418_002:0488c02_0": "門人　智粵　等編",
    "X71n1418_002:0488c03_0": "徑山語錄",
    "X71n1418_002:0488c04_0": "師於洪武二十六年十一月十三日入寺。",
    "X71n1418_002:0488c04_1": "指山門云。",
    "X71n1418_002:0488c05_0": "我此法門。",
    "X71n1418_002:0488c05_1": "天寬地闊。",
    "X71n1418_002:0488c05_2": "汝等諸人。",
    "X71n1418_002:0488c05_3": "於中出入。",
    "X71n1418_002:0488c05_4": "須知有向上關棙子始得。",
    "X71n1418_002:0488c06_5": "喝一喝。",
    "X71n1418_002:0488c07_0": "佛殿。",
    "X71n1418_002:0488c07_1": "燒香云。",
    "X71n1418_002:0488c07_2": "三世諸佛。",
    "X71n1418_002:0488c07_3": "即今向香烟起處。",
    "X71n1418_002:0488c07_4": "放光現瑞。",
    "X71n1418_002:0488c08_0": "轉大法輪。",
    "X71n1418_002:0488c08_1": "狸奴白牯。",
    "X71n1418_002:0488c08_2": "呵呵大笑。",
    "X71n1418_002:0488c08_3": "露柱燈籠。",
    "X71n1418_002:0488c08_4": "呵呵大笑。",
    "X71n1418_002:0488c09_0": "據室。",
    "X71n1418_002:0488c09_1": "拈拄杖云。",
    "X71n1418_002:0488c09_2": "明頭來明頭合。",
    "X71n1418_002:0488c09_3": "暗頭來暗頭合。",
    "X71n1418_002:0488c09_4": "道得也二十拄杖。",
    "X71n1418_002:0488c10_5": "道不得也二十拄杖。",
    "X71n1418_002:0488c10_6": "何故。",
    "X71n1418_002:0488c10_7": "重賞之下。",
    "X71n1418_002:0488c10_8": "必有勇夫。",
    "X71n1418_002:0488c11_9": "卓拄杖。",
    "X71n1418_002:0488c12_0": "拈劄。",
    "X71n1418_002:0488c12_1": "這一句子。",
    "X71n1418_002:0488c12_2": "盡大地人。",
    "X71n1418_002:0488c12_3": "受用不盡。",
    "X71n1418_002:0488c12_4": "老僧今日感恩有分。",
    "X71n1418_002:0488c14_0": "指座。",
    "X71n1418_002:0488c14_1": "從上先德。",
    "X71n1418_002:0488c14_2": "推此一位。",
    "X71n1418_002:0488c14_3": "以為極則。",
    "X71n1418_002:0488c14_4": "莊上座。",
    "X71n1418_002:0488c14_5": "見得只是尋常。",
    "X71n1418_002:0488c15_6": "遂陞座。",
    "X71n1418_002:0488c15_7": "拈香祝　聖罷。",
    "X71n1418_002:0488c15_8": "斂衣就座。",
    "X71n1418_002:0488c15_9": "僧問。",
    "X71n1418_002:0488c15_10": "九重天上承　恩澤。",
    "X71n1418_002:0488c16_11": "五髻峰頭據祖關。",
    "X71n1418_002:0488c16_12": "四海禪流齊側耳。",
    "X71n1418_002:0488c17_0": "願聞一曲萬年歡。",
    "X71n1418_002:0488c17_1": "學人上來。",
    "X71n1418_002:0488c17_2": "請師舉唱。",
    "X71n1418_002:0488c17_3": "師云。",
    "X71n1418_002:0488c17_4": "須彌頂上擊金鐘。",
    "X71n1418_002:0488c18_5": "進云。",
    "X71n1418_002:0488c18_6": "與麼則過量人明過量事。",
    "X71n1418_002:0488c18_7": "太平時唱太平歌。",
    "X71n1418_002:0488c19_8": "師云。",
    "X71n1418_002:0488c19_9": "毫釐有差。",
    "X71n1418_002:0488c19_10": "天地懸隔。",
    "X71n1418_002:0488c19_11": "進云。",
    "X71n1418_002:0488c19_12": "和尚遠辭　京國。",
    "X71n1418_002:0488c20_13": "近到徑山。",
    "X71n1418_002:0488c20_14": "如何是不動尊。",
    "X71n1418_002:0488c20_15": "師云。",
    "X71n1418_002:0488c20_16": "待盋盂峰[跳-兆+孛]跳。",
    "X71n1418_002:0488c21_0": "即向汝道。",
    "X71n1418_002:0488c21_1": "進云。",
    "X71n1418_002:0488c21_2": "適聞疏中有語。",
    "X71n1418_002:0488c21_3": "千年枯木逢春。",
    "X71n1418_002:0488c21_4": "一代曇華現瑞。",
    "X71n1418_002:0488c22_5": "可謂誠實之言。",
    "X71n1418_002:0488c22_6": "師云。",
    "X71n1418_002:0488c22_7": "汝用許多心識。",
    "X71n1418_002:0488c22_8": "計較作麼。",
    "X71n1418_002:0488c23_9": "進云。",
    "X71n1418_002:0488c23_10": "龍象筵開當此日。",
    "X71n1418_002:0488c23_11": "等閑掣取錦標歸。",
    "X71n1418_002:0488c23_12": "師云。",
    "X71n1418_002:0488c24_0": "不是龍門客。",
    "X71n1418_002:0488c24_1": "切忌遭點額。",
    "X71n1418_002:0488c24_2": "乃云。",
    "X71n1418_002:0488c24_3": "山僧道慚先哲。",
    "X71n1418_002:0488c24_4": "跡混叢林。",
    "X71n1418_002:0489a01_5": "任運度時。",
    "X71n1418_002:0489a01_6": "貴圖藏拙。",
    "X71n1418_002:0489a01_7": "何期京師宿德。",
    "X71n1418_002:0489a01_8": "謬採虗聲。",
    "X71n1418_002:0489a02_0": "俾預高僧之選。",
    "X71n1418_002:0489a02_1": "叨蒙　聖主之恩。",
    "X71n1418_002:0489a02_2": "召對　禁庭。",
    "X71n1418_002:0489a02_3": "親承睿獎。",
    "X71n1418_002:0489a03_4": "法衣特賜。",
    "X71n1418_002:0489a03_5": "光揚少室宗風。",
    "X71n1418_002:0489a03_6": "　寵命載頒。",
    "X71n1418_002:0489a03_7": "來主國一祖席。",
    "X71n1418_002:0489a04_8": "教中所謂我本無心希求。",
    "X71n1418_002:0489a04_9": "今此法王大寶自然而至。",
    "X71n1418_002:0489a05_10": "當此之時。",
    "X71n1418_002:0489a05_11": "下情惟知忻感而已。",
    "X71n1418_002:0489a05_12": "若曰闡揚佛法。",
    "X71n1418_002:0489a06_13": "報答　皇恩。",
    "X71n1418_002:0489a06_14": "且佛法如何闡揚　皇恩如何報答。",
    "X71n1418_002:0489a07_0": "到者裏。",
    "X71n1418_002:0489a07_1": "也要諸人共相知委。",
    "X71n1418_002:0489a07_2": "擊拂子。",
    "X71n1418_002:0489a07_3": "萬派千溪皆渤澥。",
    "X71n1418_002:0489a08_4": "七金五嶽盡須彌　復說偈曰。",
    "X71n1418_002:0489a08_5": "親奉　綸音出　禁圍。",
    "X71n1418_002:0489a09_6": "凌霄峰頂唱玄機。",
    "X71n1418_002:0489a09_7": "報恩一句能相委。",
    "X71n1418_002:0489a09_8": "選佛場中及第歸。",
    "X71n1418_002:0489a11_0": "冬至日上堂。",
    "X71n1418_002:0489a11_1": "魯公臺上書雲。",
    "X71n1418_002:0489a11_2": "是世法不是佛法。",
    "X71n1418_002:0489a11_3": "慈明堂前揭榜。",
    "X71n1418_002:0489a12_4": "是佛法不是世法。",
    "X71n1418_002:0489a12_5": "徑山門下。",
    "X71n1418_002:0489a12_6": "佛法世法。",
    "X71n1418_002:0489a12_7": "拈放一邊。",
    "X71n1418_002:0489a13_8": "施主今日辦供。",
    "X71n1418_002:0489a13_9": "堂中大有胡餅。",
    "X71n1418_002:0489a13_10": "一任諸人橫咬竪咬。",
    "X71n1418_002:0489a15_0": "上堂。",
    "X71n1418_002:0489a15_1": "逢佛殺佛。",
    "X71n1418_002:0489a15_2": "逢祖殺祖。",
    "X71n1418_002:0489a15_3": "橫按鏌鎁。",
    "X71n1418_002:0489a15_4": "拋沙撒土。",
    "X71n1418_002:0489a15_5": "敢問諸人。",
    "X71n1418_002:0489a16_6": "既是橫按鏌鎁。",
    "X71n1418_002:0489a16_7": "因甚拋沙撒土。",
    "X71n1418_002:0489a16_8": "莫是徑山老漢說禪全無本據麼。",
    "X71n1418_002:0489a17_9": "掇轉南辰向北看。",
    "X71n1418_002:0489a17_10": "天上日輪正卓午。",
    "X71n1418_002:0489a19_0": "師因僧請益次。",
    "X71n1418_002:0489a19_1": "師云。",
    "X71n1418_002:0489a19_2": "汝自己分上。",
    "X71n1418_002:0489a19_3": "少箇什麼。",
    "X71n1418_002:0489a19_4": "却來請益。",
    "X71n1418_002:0489a20_5": "僧擬對。",
    "X71n1418_002:0489a20_6": "師云。",
    "X71n1418_002:0489a20_7": "只知貪程。",
    "X71n1418_002:0489a20_8": "不覺蹉路。",
    "X71n1418_002:0489a21_0": "佛成道上堂。",
    "X71n1418_002:0489a21_1": "舉世尊於正覺山前。",
    "X71n1418_002:0489a21_2": "夜覩明星。",
    "X71n1418_002:0489a21_3": "成無上道。",
    "X71n1418_002:0489a22_4": "嘆云。",
    "X71n1418_002:0489a22_5": "奇哉。",
    "X71n1418_002:0489a22_6": "一切眾生。",
    "X71n1418_002:0489a22_7": "具有如來智慧德相。",
    "X71n1418_002:0489a22_8": "只為妄想執著。",
    "X71n1418_002:0489a23_9": "而不證得。",
    "X71n1418_002:0489a23_10": "師云。",
    "X71n1418_002:0489a23_11": "我要問釋迦老子。",
    "X71n1418_002:0489a23_12": "喚什麼作智慧德相。",
    "X71n1418_002:0489a24_13": "喚什麼作妄想執著。",
    "X71n1418_002:0489a24_14": "擬議不來。",
    "X71n1418_002:0489a24_15": "劈脊便棓。",
    "X71n1418_002:0489b01_0": "眾中。",
    "X71n1418_002:0489b01_1": "還有與釋迦老子出氣者麼。",
    "X71n1418_002:0489b01_2": "拈拄杖。",
    "X71n1418_002:0489b01_3": "不敢望汝與釋迦老子出氣。",
    "X71n1418_002:0489b02_4": "只是自己鼻孔。",
    "X71n1418_002:0489b02_5": "摸索得著也好。",
    "X71n1418_002:0489b02_6": "靠拄杖。",
    "X71n1418_002:0489b04_0": "上堂。",
    "X71n1418_002:0489b04_1": "徑山今日無可管待來賓。",
    "X71n1418_002:0489b04_2": "未免將佛祖骨髓。",
    "X71n1418_002:0489b04_3": "和盤托出。",
    "X71n1418_002:0489b05_4": "以當藥石。",
    "X71n1418_002:0489b05_5": "只恐諸人向諸方。",
    "X71n1418_002:0489b05_6": "築著一肚皮殘羮餿飯。",
    "X71n1418_002:0489b06_7": "遇斯藥石。",
    "X71n1418_002:0489b06_8": "吞又吞不下。",
    "X71n1418_002:0489b06_9": "吐又吐不出。",
    "X71n1418_002:0489b06_10": "返使旁觀一場笑具。",
    "X71n1418_002:0489b07_11": "正與麼時。",
    "X71n1418_002:0489b07_12": "且道。",
    "X71n1418_002:0489b07_13": "誰是旁觀者。",
    "X71n1418_002:0489b07_14": "回顧侍者云。",
    "X71n1418_002:0489b08_15": "幾乎錯下注脚。",
    "X71n1418_002:0489b08_16": "便下座。",
    "X71n1418_002:0489b09_0": "元旦上堂。",
    "X71n1418_002:0489b09_1": "老僧未開口已前。",
    "X71n1418_002:0489b09_2": "一切時一切處。",
    "X71n1418_002:0489b09_3": "普光心印。",
    "X71n1418_002:0489b10_4": "文彩全彰。",
    "X71n1418_002:0489b10_5": "待汝著眼覷來。",
    "X71n1418_002:0489b10_6": "早是塗糊了也。",
    "X71n1418_002:0489b10_7": "今朝特為點出。",
    "X71n1418_002:0489b11_8": "普請諸人證據。",
    "X71n1418_002:0489b11_9": "驀拈拄杖。",
    "X71n1418_002:0489b11_10": "卓一下云。",
    "X71n1418_002:0489b11_11": "新年把筆。",
    "X71n1418_002:0489b12_12": "萬事大吉。",
    "X71n1418_002:0489b12_13": "靠拄杖下座。",
    "X71n1418_002:0489b13_0": "師問僧云。",
    "X71n1418_002:0489b13_1": "盡十方世界。",
    "X71n1418_002:0489b13_2": "是毗盧正印。",
    "X71n1418_002:0489b13_3": "你道。",
    "X71n1418_002:0489b13_4": "印紐落在什麼人手裏。",
    "X71n1418_002:0489b14_5": "僧擬議。",
    "X71n1418_002:0489b14_6": "師厲聲云。",
    "X71n1418_002:0489b14_7": "且去別時來。",
    "X71n1418_002:0489b15_0": "上堂。",
    "X71n1418_002:0489b15_1": "舉古德云。",
    "X71n1418_002:0489b15_2": "有一人。",
    "X71n1418_002:0489b15_3": "常在途中。",
    "X71n1418_002:0489b15_4": "不離家舍。",
    "X71n1418_002:0489b15_5": "有一人。",
    "X71n1418_002:0489b16_0": "離家舍不在途中。",
    "X71n1418_002:0489b16_1": "且道。",
    "X71n1418_002:0489b16_2": "那一人。",
    "X71n1418_002:0489b16_3": "合受人天供養。",
    "X71n1418_002:0489b16_4": "師云。",
    "X71n1418_002:0489b17_0": "離家舍不離家舍。",
    "X71n1418_002:0489b17_1": "在途中不在途中。",
    "X71n1418_002:0489b17_2": "即不論。",
    "X71n1418_002:0489b17_3": "徑山道。",
    "X71n1418_002:0489b18_0": "盡大地。",
    "X71n1418_002:0489b18_1": "止有一人。",
    "X71n1418_002:0489b18_2": "合受人天供養。",
    "X71n1418_002:0489b18_3": "諸人還識那一人麼。",
    "X71n1418_002:0489b19_4": "擊拂子。",
    "X71n1418_002:0489b19_5": "莫教開却眼。",
    "X71n1418_002:0489b19_6": "鷂子過新羅。",
    "X71n1418_002:0489b20_0": "上堂。",
    "X71n1418_002:0489b20_1": "三世諸佛也與麼。",
    "X71n1418_002:0489b20_2": "六代祖師也與麼。",
    "X71n1418_002:0489b20_3": "天下老和尚也只與麼。",
    "X71n1418_002:0489b21_4": "獨有徑山却不與麼。",
    "X71n1418_002:0489b21_5": "你道。",
    "X71n1418_002:0489b21_6": "與麼不與麼。",
    "X71n1418_002:0489b22_0": "還有優劣也無。",
    "X71n1418_002:0489b22_1": "拈拄杖。",
    "X71n1418_002:0489b22_2": "畫一畫云。",
    "X71n1418_002:0489b22_3": "一二三四五六七。",
    "X71n1418_002:0489b23_0": "七六五四三二一。",
    "X71n1418_002:0489b23_1": "昨夜三更月到窻。",
    "X71n1418_002:0489b23_2": "文殊坐對維摩詰。",
    "X71n1418_002:0489b24_3": "便下座。",
    "X71n1418_002:0489c01_0": "藥監寺火。",
    "X71n1418_002:0489c01_1": "應病與藥。",
    "X71n1418_002:0489c01_2": "據欵結按。",
    "X71n1418_002:0489c01_3": "金剛圈栗棘蓬。",
    "X71n1418_002:0489c01_4": "透不過吞不下。",
    "X71n1418_002:0489c02_5": "摠是死漢。",
    "X71n1418_002:0489c02_6": "山前猛虎趂於菟。",
    "X71n1418_002:0489c02_7": "火裏蝍蟟吞鼈鼻。",
    "X71n1418_002:0489c04_0": "上堂。",
    "X71n1418_002:0489c04_1": "舉盤山和尚云。",
    "X71n1418_002:0489c04_2": "心月孤圓。",
    "X71n1418_002:0489c04_3": "光吞萬像。",
    "X71n1418_002:0489c04_4": "光非照境。",
    "X71n1418_002:0489c05_0": "境亦非存。",
    "X71n1418_002:0489c05_1": "光境俱忘。",
    "X71n1418_002:0489c05_2": "復是何物。",
    "X71n1418_002:0489c05_3": "洞山和尚云。",
    "X71n1418_002:0489c05_4": "光境未忘。",
    "X71n1418_002:0489c06_5": "復是何物。",
    "X71n1418_002:0489c06_6": "師云。",
    "X71n1418_002:0489c06_7": "二尊宿。",
    "X71n1418_002:0489c06_8": "弄物不知名。",
    "X71n1418_002:0489c06_9": "各與二十拄杖。",
    "X71n1418_002:0489c07_10": "不見道。",
    "X71n1418_002:0489c07_11": "見義不為。",
    "X71n1418_002:0489c07_12": "何勇之有。",
    "X71n1418_002:0489c08_0": "芥室和尚忌。",
    "X71n1418_002:0489c08_1": "拈香云。",
    "X71n1418_002:0489c08_2": "巴陵三轉語。",
    "X71n1418_002:0489c08_3": "太殺誇張。",
    "X71n1418_002:0489c08_4": "楊岐女人拜。",
    "X71n1418_002:0489c09_5": "徒勞賣弄。",
    "X71n1418_002:0489c09_6": "徑山今日爇此枯木。",
    "X71n1418_002:0489c09_7": "不是供養先師。",
    "X71n1418_002:0489c10_0": "只要天下衲僧。",
    "X71n1418_002:0489c10_1": "知有些子氣息。",
    "X71n1418_002:0489c10_2": "遂插香。",
    "X71n1418_002:0489c10_3": "召大眾云。",
    "X71n1418_002:0489c10_4": "且道。",
    "X71n1418_002:0489c11_5": "是甚氣息。",
    "X71n1418_002:0489c11_6": "眾無語。",
    "X71n1418_002:0489c11_7": "師哭云。",
    "X71n1418_002:0489c11_8": "蒼天蒼天。",
    "X71n1418_002:0489c12_0": "上堂。",
    "X71n1418_002:0489c12_1": "顛倒想滅。",
    "X71n1418_002:0489c12_2": "生死路絕。",
    "X71n1418_002:0489c12_3": "生死路絕。",
    "X71n1418_002:0489c12_4": "涅槃界空。",
    "X71n1418_002:0489c12_5": "洞山五位。",
    "X71n1418_002:0489c13_6": "臨濟三玄。",
    "X71n1418_002:0489c13_7": "擬向甚處安著。",
    "X71n1418_002:0489c13_8": "朝悠悠。",
    "X71n1418_002:0489c13_9": "暮悠悠。",
    "X71n1418_002:0489c13_10": "欲窮千里目。",
    "X71n1418_002:0489c14_11": "更上一層樓。",
    "X71n1418_002:0489c14_12": "拍禪床。",
    "X71n1418_002:0489c14_13": "下座。",
    "X71n1418_002:0489c15_0": "上堂。",
    "X71n1418_002:0489c15_1": "古人說不到處。",
    "X71n1418_002:0489c15_2": "今人說得到。",
    "X71n1418_002:0489c15_3": "今人行不到處。",
    "X71n1418_002:0489c15_4": "古人行得到。",
    "X71n1418_002:0489c16_5": "要知行不到處。",
    "X71n1418_002:0489c16_6": "便是說不到處。",
    "X71n1418_002:0489c16_7": "要知說得到處。",
    "X71n1418_002:0489c17_8": "便是行得到處。",
    "X71n1418_002:0489c17_9": "古人今人鼻孔。",
    "X71n1418_002:0489c17_10": "摠在徑山拄杖頭上。",
    "X71n1418_002:0489c18_11": "諸方老宿。",
    "X71n1418_002:0489c18_12": "作麼拈掇。",
    "X71n1418_002:0489c18_13": "現前大眾。",
    "X71n1418_002:0489c18_14": "作麼拈掇。",
    "X71n1418_002:0489c18_15": "拈拄杖卓一下。",
    "X71n1418_002:0489c19_16": "便下座。",
    "X71n1418_002:0489c20_0": "冬至上堂。",
    "X71n1418_002:0489c20_1": "舉洞山。",
    "X71n1418_002:0489c20_2": "冬夜與泰首座。",
    "X71n1418_002:0489c20_3": "喫果子次。",
    "X71n1418_002:0489c20_4": "問云。",
    "X71n1418_002:0489c20_5": "有一物。",
    "X71n1418_002:0489c21_6": "明如日黑如漆。",
    "X71n1418_002:0489c21_7": "常在動用中。",
    "X71n1418_002:0489c21_8": "動用中收不得。",
    "X71n1418_002:0489c21_9": "過在甚麼處。",
    "X71n1418_002:0489c22_10": "座云。",
    "X71n1418_002:0489c22_11": "過在動用中。",
    "X71n1418_002:0489c22_12": "洞山令侍者掇退果卓。",
    "X71n1418_002:0489c23_0": "泰首座不得果子吃。",
    "X71n1418_002:0489c23_1": "師拈云。",
    "X71n1418_002:0489c23_2": "當斷不斷。",
    "X71n1418_002:0489c23_3": "反招其亂。",
    "X71n1418_002:0489c23_4": "若是徑山。",
    "X71n1418_002:0489c24_5": "見他道過在甚麼處。",
    "X71n1418_002:0489c24_6": "便與掀翻果卓。",
    "X71n1418_002:0489c24_7": "亦使洞山。",
    "X71n1418_002:0490a01_8": "知有宗門向上爪牙。",
    "X71n1418_002:0490a01_9": "今日兒孫。",
    "X71n1418_002:0490a01_10": "不致寂寥。",
    "X71n1418_002:0490a01_11": "雖然。",
    "X71n1418_002:0490a01_12": "也須脚踏實地始得。",
    "X71n1418_002:0490a02_13": "拈拄杖。",
    "X71n1418_002:0490a02_14": "不向藍田射石虎。",
    "X71n1418_002:0490a02_15": "何人知是李將軍。",
    "X71n1418_002:0490a03_16": "卓拄杖。",
    "X71n1418_002:0490a03_17": "下座。",
    "X71n1418_002:0490a04_0": "上堂。",
    "X71n1418_002:0490a04_1": "祖師心印。",
    "X71n1418_002:0490a04_2": "狀似鉄牛之機。",
    "X71n1418_002:0490a04_3": "搆得搆不得。",
    "X71n1418_002:0490a04_4": "即不問。",
    "X71n1418_002:0490a05_0": "你道。",
    "X71n1418_002:0490a05_1": "祖師開口。",
    "X71n1418_002:0490a05_2": "舌頭落在甚麼處。",
    "X71n1418_002:0490a05_3": "擊拂子。",
    "X71n1418_002:0490a05_4": "不是一番寒徹骨。",
    "X71n1418_002:0490a06_5": "爭得梅花撲鼻香。",
    "X71n1418_002:0490a07_0": "上堂。",
    "X71n1418_002:0490a07_1": "舉古德因僧問。",
    "X71n1418_002:0490a07_2": "如何是新年頭佛法。",
    "X71n1418_002:0490a07_3": "古德云。",
    "X71n1418_002:0490a07_4": "春來草自青。",
    "X71n1418_002:0490a08_5": "師云。",
    "X71n1418_002:0490a08_6": "古德與麼答話。",
    "X71n1418_002:0490a08_7": "雖赴來機。",
    "X71n1418_002:0490a08_8": "要且未能脫洒。",
    "X71n1418_002:0490a09_9": "今日忽有人問徑山如何是新年頭佛法。",
    "X71n1418_002:0490a09_10": "即向他道。",
    "X71n1418_002:0490a10_11": "八荒開壽域。",
    "X71n1418_002:0490a10_12": "一氣轉洪鈞。",
    "X71n1418_002:0490a10_13": "三十年後。",
    "X71n1418_002:0490a10_14": "一任天下衲僧。",
    "X71n1418_002:0490a11_15": "胡卜亂卜。",
    "X71n1418_002:0490a12_0": "上堂。",
    "X71n1418_002:0490a12_1": "妙用全彰。",
    "X71n1418_002:0490a12_2": "無在不在。",
    "X71n1418_002:0490a12_3": "通身是眼。",
    "X71n1418_002:0490a12_4": "覰不能及。",
    "X71n1418_002:0490a12_5": "通身是口。",
    "X71n1418_002:0490a13_6": "說不能到。",
    "X71n1418_002:0490a13_7": "汝等諸人。",
    "X71n1418_002:0490a13_8": "聞與麼道。",
    "X71n1418_002:0490a13_9": "將謂有多少奇特。",
    "X71n1418_002:0490a14_10": "殊不知。",
    "X71n1418_002:0490a14_11": "賤如糞土。",
    "X71n1418_002:0490a14_12": "輕似毫毛。",
    "X71n1418_002:0490a14_13": "便下座。",
    "X71n1418_002:0490a15_0": "佛涅槃上堂。",
    "X71n1418_002:0490a15_1": "舉世尊於涅槃會上。",
    "X71n1418_002:0490a15_2": "以手摩胸。",
    "X71n1418_002:0490a15_3": "告眾云。",
    "X71n1418_002:0490a16_0": "汝等善觀吾紫磨金色之身。",
    "X71n1418_002:0490a16_1": "瞻仰取足。",
    "X71n1418_002:0490a16_2": "勿令後悔。",
    "X71n1418_002:0490a16_3": "若謂吾滅度。",
    "X71n1418_002:0490a17_4": "非吾弟子。",
    "X71n1418_002:0490a17_5": "若謂吾不滅度。",
    "X71n1418_002:0490a17_6": "亦非吾弟子。",
    "X71n1418_002:0490a17_7": "時百萬億眾。",
    "X71n1418_002:0490a18_8": "悉皆契悟。",
    "X71n1418_002:0490a18_9": "師云。",
    "X71n1418_002:0490a18_10": "瞿曇末上。",
    "X71n1418_002:0490a18_11": "一塲敗闕。",
    "X71n1418_002:0490a18_12": "百萬億眾中。",
    "X71n1418_002:0490a19_13": "更無一人有衲僧氣息。",
    "X71n1418_002:0490a19_14": "諸人還見世尊以手摩胸麼。",
    "X71n1418_002:0490a20_15": "水向石邊流出冷。",
    "X71n1418_002:0490a20_16": "風從花裏過來香。",
    "X71n1418_002:0490a21_0": "上堂。",
    "X71n1418_002:0490a21_1": "良久云。",
    "X71n1418_002:0490a21_2": "自有生佛以來。",
    "X71n1418_002:0490a21_3": "說法如雲如雨者。",
    "X71n1418_002:0490a21_4": "不可勝紀。",
    "X71n1418_002:0490a22_5": "徑山今日權借虗空為口。",
    "X71n1418_002:0490a22_6": "須彌為舌。",
    "X71n1418_002:0490a22_7": "宣說真俗不二法門。",
    "X71n1418_002:0490a23_8": "十方世界。",
    "X71n1418_002:0490a23_9": "情與無情。",
    "X71n1418_002:0490a23_10": "一時異口同聲讚言。",
    "X71n1418_002:0490a24_0": "善哉善哉。",
    "X71n1418_002:0490a24_1": "希有希有。",
    "X71n1418_002:0490a24_2": "眾中莫有旁不甘的麼。",
    "X71n1418_002:0490a24_3": "出來與拄杖子相見。",
    "X71n1418_002:0490b01_4": "拈拄杖卓一下云。",
    "X71n1418_002:0490b01_5": "諦觀法王法。",
    "X71n1418_002:0490b01_6": "法王法如是。",
    "X71n1418_002:0490b02_7": "便下座。",
    "X71n1418_002:0490b03_0": "上堂。",
    "X71n1418_002:0490b03_1": "大道只在目前。",
    "X71n1418_002:0490b03_2": "要且目前難覩。",
    "X71n1418_002:0490b03_3": "欲識大道真體。",
    "X71n1418_002:0490b04_0": "不離聲色言語。",
    "X71n1418_002:0490b04_1": "豎拂子云。",
    "X71n1418_002:0490b04_2": "誌公和尚。",
    "X71n1418_002:0490b04_3": "即今在徑山拂子頭上。",
    "X71n1418_002:0490b05_4": "打筋斗供養。",
    "X71n1418_002:0490b05_5": "諸人昔所未見者。",
    "X71n1418_002:0490b05_6": "看看。",
    "X71n1418_002:0490b05_7": "南天台北五臺。",
    "X71n1418_002:0490b06_8": "走得遍還到來。",
    "X71n1418_002:0490b06_9": "喝一喝。",
    "X71n1418_002:0490b06_10": "下座。",
    "X71n1418_002:0490b07_0": "佛誕上堂。",
    "X71n1418_002:0490b07_1": "瞿曇降誕是斯辰。",
    "X71n1418_002:0490b07_2": "啜賺古今多少人。",
    "X71n1418_002:0490b07_3": "恨殺雲門棒頭短。",
    "X71n1418_002:0490b08_4": "虗空迸作一條痕。",
    "X71n1418_002:0490b09_0": "上堂。",
    "X71n1418_002:0490b09_1": "豎拂子云。",
    "X71n1418_002:0490b09_2": "十方諸佛。",
    "X71n1418_002:0490b09_3": "在拂子頭上。",
    "X71n1418_002:0490b09_4": "異口同音。",
    "X71n1418_002:0490b09_5": "宣說安居法門云。",
    "X71n1418_002:0490b10_6": "九旬無虗棄之功。",
    "X71n1418_002:0490b10_7": "百刼即今時之用。",
    "X71n1418_002:0490b11_0": "撞著十字街頭廖胡子。",
    "X71n1418_002:0490b11_1": "揚聲唱言。",
    "X71n1418_002:0490b11_2": "恁麼說話。",
    "X71n1418_002:0490b11_3": "面皮厚多少。",
    "X71n1418_002:0490b12_4": "好點一把火照看。",
    "X71n1418_002:0490b12_5": "諸佛世尊。",
    "X71n1418_002:0490b12_6": "一時懡[怡-台+羅]而散。",
    "X71n1418_002:0490b12_7": "汝等沙門釋子。",
    "X71n1418_002:0490b13_8": "作麼生與諸佛出氣。",
    "X71n1418_002:0490b13_9": "擊拂子云。",
    "X71n1418_002:0490b13_10": "徒將不平事。",
    "X71n1418_002:0490b14_11": "說與負心人。",
    "X71n1418_002:0490b15_0": "上堂。",
    "X71n1418_002:0490b15_1": "僧問。",
    "X71n1418_002:0490b15_2": "如何是宗門向上第一句。",
    "X71n1418_002:0490b15_3": "師云。",
    "X71n1418_002:0490b15_4": "我若向你說。",
    "X71n1418_002:0490b16_5": "即是第二句。",
    "X71n1418_002:0490b16_6": "進云。",
    "X71n1418_002:0490b16_7": "二六時中。",
    "X71n1418_002:0490b16_8": "如何用心。",
    "X71n1418_002:0490b16_9": "師云。",
    "X71n1418_002:0490b16_10": "無你用心處。",
    "X71n1418_002:0490b17_11": "乃云。",
    "X71n1418_002:0490b17_12": "大光明藏。",
    "X71n1418_002:0490b17_13": "無幽不燭。",
    "X71n1418_002:0490b17_14": "一槌打碎。",
    "X71n1418_002:0490b17_15": "孰辨端倪。",
    "X71n1418_002:0490b18_16": "赤梢鯉魚。",
    "X71n1418_002:0490b18_17": "跳入龍門。",
    "X71n1418_002:0490b18_18": "南山起雲。",
    "X71n1418_002:0490b18_19": "北山下雨。",
    "X71n1418_002:0490b18_20": "諸人濕却袈裟角。",
    "X71n1418_002:0490b19_21": "還知麼。",
    "X71n1418_002:0490b19_22": "喝一喝。",
    "X71n1418_002:0490b19_23": "下座。",
    "X71n1418_002:0490b20_0": "上堂。",
    "X71n1418_002:0490b20_1": "解夏止有一月日在。",
    "X71n1418_002:0490b20_2": "剋期取證事作麼生。",
    "X71n1418_002:0490b20_3": "眾中忽有箇漢出來道。",
    "X71n1418_002:0490b21_4": "長長年儱侗月。",
    "X71n1418_002:0490b21_5": "老僧拽拄杖趂出。",
    "X71n1418_002:0490b22_0": "然則膏肓之門難以發藥。",
    "X71n1418_002:0490b22_1": "布袋裏盛錐子。",
    "X71n1418_002:0490b22_2": "不出頭是好手。",
    "X71n1418_002:0490b23_3": "喝一喝。",
    "X71n1418_002:0490b23_4": "下座。",
    "X71n1418_002:0490b24_0": "上堂。",
    "X71n1418_002:0490b24_1": "諸禪德。",
    "X71n1418_002:0490b24_2": "解制之後。",
    "X71n1418_002:0490b24_3": "東去西去。",
    "X71n1418_002:0490b24_4": "南去北去。",
    "X71n1418_002:0490b24_5": "忽然三家村裏。",
    "X71n1418_002:0490c01_6": "撞著个風顛漢。",
    "X71n1418_002:0490c01_7": "問云。",
    "X71n1418_002:0490c01_8": "上座自徑山來。",
    "X71n1418_002:0490c01_9": "只如開山和尚有言。",
    "X71n1418_002:0490c02_10": "山上有鯉魚。",
    "X71n1418_002:0490c02_11": "井底有蓬塵。",
    "X71n1418_002:0490c02_12": "畢竟意作麼生。",
    "X71n1418_002:0490c03_13": "須是方便答他始得。",
    "X71n1418_002:0490c03_14": "不可向伊舉古舉今。",
    "X71n1418_002:0490c03_15": "說事說理。",
    "X71n1418_002:0490c04_16": "不可拂袖便行。",
    "X71n1418_002:0490c04_17": "驀面便吐。",
    "X71n1418_002:0490c04_18": "設若答他不契。",
    "X71n1418_002:0490c04_19": "被他叱云。",
    "X71n1418_002:0490c05_20": "徑山飽柴飽水。",
    "X71n1418_002:0490c05_21": "輸與上座受用。",
    "X71n1418_002:0490c05_22": "若是佛法。",
    "X71n1418_002:0490c05_23": "未夢見在。",
    "X71n1418_002:0490c06_24": "累及老僧。",
    "X71n1418_002:0490c06_25": "也是箇無孔鐵槌。",
    "X71n1418_002:0490c06_26": "擊拂子云。",
    "X71n1418_002:0490c06_27": "一等共行山下路。",
    "X71n1418_002:0490c07_28": "眼頭各自看風烟。",
    "X71n1418_002:0490c08_0": "上堂。",
    "X71n1418_002:0490c08_1": "子胡喝僧看狗。",
    "X71n1418_002:0490c08_2": "趙州喚僧喫茶。",
    "X71n1418_002:0490c08_3": "冷地看來。",
    "X71n1418_002:0490c08_4": "慚惶殺人。",
    "X71n1418_002:0490c09_5": "老僧不曾辜負諸人。",
    "X71n1418_002:0490c09_6": "諸人不得辜負老僧。",
    "X71n1418_002:0490c10_0": "因事上堂。",
    "X71n1418_002:0490c10_1": "嗟末法惡時世。",
    "X71n1418_002:0490c10_2": "眾生薄福難調制。",
    "X71n1418_002:0490c10_3": "去聖遠兮邪見深。",
    "X71n1418_002:0490c11_4": "魔強法弱多冤害。",
    "X71n1418_002:0490c11_5": "聞說如來頓教門。",
    "X71n1418_002:0490c11_6": "恨不滅除令瓦碎。",
    "X71n1418_002:0490c12_7": "古人一期說話。",
    "X71n1418_002:0490c12_8": "誰知驗在今日。",
    "X71n1418_002:0490c12_9": "雖然。",
    "X71n1418_002:0490c12_10": "從他謗任他非。",
    "X71n1418_002:0490c13_11": "把火燒天徒自疲。",
    "X71n1418_002:0490c13_12": "我聞恰似飲甘露。",
    "X71n1418_002:0490c13_13": "消融頓入不思議。",
    "X71n1418_002:0490c14_14": "且道。",
    "X71n1418_002:0490c14_15": "是什麼人分上事。",
    "X71n1418_002:0490c14_16": "拈拄杖敲香几云。",
    "X71n1418_002:0490c15_17": "永嘉大師來也。",
    "X71n1418_002:0490c15_18": "卓拄杖。",
    "X71n1418_002:0490c15_19": "上士一決一切了。",
    "X71n1418_002:0490c15_20": "中下多聞多不信。",
    "X71n1418_002:0490c17_0": "上堂。",
    "X71n1418_002:0490c17_1": "僧問。",
    "X71n1418_002:0490c17_2": "如何是祖師西來意。",
    "X71n1418_002:0490c17_3": "師云。",
    "X71n1418_002:0490c17_4": "盋盂口向天。",
    "X71n1418_002:0490c17_5": "進云。",
    "X71n1418_002:0490c18_6": "此是古人語[妳-女+口]。",
    "X71n1418_002:0490c18_7": "師云。",
    "X71n1418_002:0490c18_8": "老僧用得恰好。",
    "X71n1418_002:0490c18_9": "進云。",
    "X71n1418_002:0490c18_10": "如何是奇特事。",
    "X71n1418_002:0490c19_11": "師云。",
    "X71n1418_002:0490c19_12": "千年田八百主。",
    "X71n1418_002:0490c19_13": "進云。",
    "X71n1418_002:0490c19_14": "學人不會。",
    "X71n1418_002:0490c19_15": "師云。",
    "X71n1418_002:0490c19_16": "至今將不去。",
    "X71n1418_002:0490c20_17": "留與老農耕。",
    "X71n1418_002:0490c20_18": "僧禮拜。",
    "X71n1418_002:0490c20_19": "師乃云。",
    "X71n1418_002:0490c20_20": "善能分別諸法相。",
    "X71n1418_002:0490c21_21": "於第一義而不動。",
    "X71n1418_002:0490c21_22": "菩提涅槃。",
    "X71n1418_002:0490c21_23": "真如解脫。",
    "X71n1418_002:0490c21_24": "盡是法相。",
    "X71n1418_002:0490c22_25": "喚什麼作第一義。",
    "X71n1418_002:0490c22_26": "有者背地裏商量。",
    "X71n1418_002:0490c22_27": "便道。",
    "X71n1418_002:0490c22_28": "常在心目之間。",
    "X71n1418_002:0490c23_29": "逈出思議之表。",
    "X71n1418_002:0490c23_30": "殊不知。",
    "X71n1418_002:0490c23_31": "金屑雖貴。",
    "X71n1418_002:0490c23_32": "落眼成翳。",
    "X71n1418_002:0490c24_0": "要明第一義。",
    "X71n1418_002:0490c24_1": "猶隔海在。",
    "X71n1418_002:0490c24_2": "擊拂子云。",
    "X71n1418_002:0490c24_3": "海枯終見底。",
    "X71n1418_002:0490c24_4": "人死不知心。",
    "X71n1418_002:0491a02_0": "祖忌拈香。",
    "X71n1418_002:0491a02_1": "梁王殿上。",
    "X71n1418_002:0491a02_2": "將金博金。",
    "X71n1418_002:0491a02_3": "少室峰前。",
    "X71n1418_002:0491a02_4": "以楔出楔。",
    "X71n1418_002:0491a03_0": "葱嶺那邊逢宋雲。",
    "X71n1418_002:0491a03_1": "誰知弄巧翻成拙。",
    "X71n1418_002:0491a04_0": "上堂。",
    "X71n1418_002:0491a04_1": "群陰剝盡一陽生。",
    "X71n1418_002:0491a04_2": "萬國懽呼賀太平。",
    "X71n1418_002:0491a04_3": "日出三竿天四霽。",
    "X71n1418_002:0491a05_4": "五雲獨繞九重城。",
    "X71n1418_002:0491a06_0": "履首座入塔。",
    "X71n1418_002:0491a06_1": "真實履踐的人。",
    "X71n1418_002:0491a06_2": "出生入死。",
    "X71n1418_002:0491a06_3": "如同游戲。",
    "X71n1418_002:0491a06_4": "且眉間掛劒時如何。",
    "X71n1418_002:0491a07_5": "擬議不來。",
    "X71n1418_002:0491a07_6": "髑髏著地。",
    "X71n1418_002:0491a08_0": "上堂。",
    "X71n1418_002:0491a08_1": "舉真淨和尚上堂云。",
    "X71n1418_002:0491a08_2": "衲僧門下。",
    "X71n1418_002:0491a08_3": "無非過量境界。",
    "X71n1418_002:0491a09_0": "自在禪定。",
    "X71n1418_002:0491a09_1": "乃喝一喝云。",
    "X71n1418_002:0491a09_2": "豈不是過量境界。",
    "X71n1418_002:0491a09_3": "又謦欬一聲云。",
    "X71n1418_002:0491a10_4": "豈不是自在禪定。",
    "X71n1418_002:0491a10_5": "阿呵呵。",
    "X71n1418_002:0491a10_6": "將此深心奉塵剎。",
    "X71n1418_002:0491a10_7": "是則名為報佛恩。",
    "X71n1418_002:0491a11_8": "師云。",
    "X71n1418_002:0491a11_9": "顯示過量境界。",
    "X71n1418_002:0491a11_10": "自在禪定。",
    "X71n1418_002:0491a11_11": "還他真淨老人。",
    "X71n1418_002:0491a12_12": "若是衲僧門下。",
    "X71n1418_002:0491a12_13": "猶欠悟在。",
    "X71n1418_002:0491a12_14": "徑山則不然。",
    "X71n1418_002:0491a12_15": "拈拄杖卓一下云。",
    "X71n1418_002:0491a13_16": "得之於心。",
    "X71n1418_002:0491a13_17": "事事無碍。",
    "X71n1418_002:0491a13_18": "應之於手。",
    "X71n1418_002:0491a13_19": "法法圓成。",
    "X71n1418_002:0491a14_20": "靠拄杖。",
    "X71n1418_002:0491a14_21": "他家自有通霄路。",
    "X71n1418_002:0491a14_22": "不向如來行處行。",
    "X71n1418_002:0491a15_0": "上堂。",
    "X71n1418_002:0491a15_1": "一迷一切迷。",
    "X71n1418_002:0491a15_2": "一悟一切悟。",
    "X71n1418_002:0491a15_3": "一暗一切暗。",
    "X71n1418_002:0491a15_4": "一明一切明。",
    "X71n1418_002:0491a16_5": "所以具足凡夫法。",
    "X71n1418_002:0491a16_6": "凡夫不知。",
    "X71n1418_002:0491a16_7": "具足聖人法。",
    "X71n1418_002:0491a16_8": "聖人不會。",
    "X71n1418_002:0491a17_9": "聖人若會。",
    "X71n1418_002:0491a17_10": "即是凡夫。",
    "X71n1418_002:0491a17_11": "凡夫若知。",
    "X71n1418_002:0491a17_12": "即是聖人。",
    "X71n1418_002:0491a17_13": "到這裏。",
    "X71n1418_002:0491a18_14": "塵勞煩惱。",
    "X71n1418_002:0491a18_15": "菩提解脫。",
    "X71n1418_002:0491a18_16": "縛作一塊。",
    "X71n1418_002:0491a18_17": "且道。",
    "X71n1418_002:0491a18_18": "非非想天。",
    "X71n1418_002:0491a18_19": "即今有幾人修因證果。",
    "X71n1418_002:0491a19_20": "拈拄杖云。",
    "X71n1418_002:0491a19_21": "一年三百六十日。",
    "X71n1418_002:0491a19_22": "一日日從今日始。",
    "X71n1418_002:0491a20_23": "拄杖子亦從今日始。",
    "X71n1418_002:0491a20_24": "卓拄杖。",
    "X71n1418_002:0491a20_25": "擊碎三玄三要門。",
    "X71n1418_002:0491a21_26": "普天匝地清風起。",
    "X71n1418_002:0491a22_0": "上堂。",
    "X71n1418_002:0491a22_1": "衲僧門下。",
    "X71n1418_002:0491a22_2": "貴圖直截。",
    "X71n1418_002:0491a22_3": "如何是佛。",
    "X71n1418_002:0491a22_4": "殿裏底。",
    "X71n1418_002:0491a22_5": "如何是道。",
    "X71n1418_002:0491a23_6": "墻外底。",
    "X71n1418_002:0491a23_7": "此是趙州和尚。",
    "X71n1418_002:0491a23_8": "直截為人處。",
    "X71n1418_002:0491a23_9": "然則徑山直截處。",
    "X71n1418_002:0491a24_10": "也要諸人共知。",
    "X71n1418_002:0491a24_11": "喝一喝。",
    "X71n1418_002:0491a24_12": "下座。",
    "X71n1418_002:0491b01_0": "上堂。",
    "X71n1418_002:0491b01_1": "盡大地是光明藏。",
    "X71n1418_002:0491b01_2": "盡大地是解脫門。",
    "X71n1418_002:0491b01_3": "盡大地是金剛寶座。",
    "X71n1418_002:0491b02_4": "盡大地是毗盧正體。",
    "X71n1418_002:0491b02_5": "汝等諸人。",
    "X71n1418_002:0491b02_6": "同一心知。",
    "X71n1418_002:0491b03_0": "同一眼見。",
    "X71n1418_002:0491b03_1": "因甚緇素不出。",
    "X71n1418_002:0491b03_2": "不得自在受用。",
    "X71n1418_002:0491b03_3": "徑山今日一一拋向諸人面前。",
    "X71n1418_002:0491b04_4": "普請證據。",
    "X71n1418_002:0491b04_5": "良久云。",
    "X71n1418_002:0491b04_6": "楊岐驢子[跳-兆+孛]跳。",
    "X71n1418_002:0491b05_7": "觸碎雲峰桶篐。",
    "X71n1418_002:0491b05_8": "不是龍門上客。",
    "X71n1418_002:0491b05_9": "莫來倒捋虎鬚。",
    "X71n1418_002:0491b05_10": "擊拂子下座。",
    "X71n1418_002:0491b07_0": "師問僧云。",
    "X71n1418_002:0491b07_1": "汝破夏來見老僧。",
    "X71n1418_002:0491b07_2": "著甚來由。",
    "X71n1418_002:0491b07_3": "僧云。",
    "X71n1418_002:0491b07_4": "生死事大。",
    "X71n1418_002:0491b08_5": "師云。",
    "X71n1418_002:0491b08_6": "山上與山下。",
    "X71n1418_002:0491b08_7": "同一天地。",
    "X71n1418_002:0491b08_8": "因甚炎凉不同。",
    "X71n1418_002:0491b08_9": "僧云。",
    "X71n1418_002:0491b09_0": "和尚自生分別。",
    "X71n1418_002:0491b09_1": "師以坐具摵之云。",
    "X71n1418_002:0491b09_2": "他時異日。",
    "X71n1418_002:0491b09_3": "也道見徑山來。",
    "X71n1418_002:0491b10_4": "僧發憤趨出。",
    "X71n1418_002:0491b10_5": "師喚云。",
    "X71n1418_002:0491b10_6": "上座。",
    "X71n1418_002:0491b10_7": "僧回首。",
    "X71n1418_002:0491b10_8": "師云。",
    "X71n1418_002:0491b10_9": "生死事大那。",
    "X71n1418_002:0491b11_10": "僧禮拜。",
    "X71n1418_002:0491b12_0": "上堂。",
    "X71n1418_002:0491b12_1": "人從廬岳來。",
    "X71n1418_002:0491b12_2": "接得華頂信。",
    "X71n1418_002:0491b12_3": "報道。",
    "X71n1418_002:0491b12_4": "南山白額虎。",
    "X71n1418_002:0491b12_5": "却在龍淵裏。",
    "X71n1418_002:0491b13_6": "藏牙伏爪。",
    "X71n1418_002:0491b13_7": "東海赤梢鯉。",
    "X71n1418_002:0491b13_8": "直上鷲峰頭。",
    "X71n1418_002:0491b13_9": "躍浪衝波。",
    "X71n1418_002:0491b14_10": "好大眾。",
    "X71n1418_002:0491b14_11": "一大藏教。",
    "X71n1418_002:0491b14_12": "何曾說到這裏。",
    "X71n1418_002:0491b14_13": "雖然。",
    "X71n1418_002:0491b14_14": "徑山拄杖子。",
    "X71n1418_002:0491b15_15": "未肯放過在。",
    "X71n1418_002:0491b15_16": "拈拄杖。",
    "X71n1418_002:0491b15_17": "畫一畫云。",
    "X71n1418_002:0491b15_18": "仙人張古老。",
    "X71n1418_002:0491b15_19": "不受藥葫蘆。",
    "X71n1418_002:0491b16_20": "靠拄杖。",
    "X71n1418_002:0491b16_21": "下座。",
    "X71n1418_002:0491b17_0": "上堂。",
    "X71n1418_002:0491b17_1": "破有法王。",
    "X71n1418_002:0491b17_2": "出現世間。",
    "X71n1418_002:0491b17_3": "隨眾生欲。",
    "X71n1418_002:0491b17_4": "種種說法。",
    "X71n1418_002:0491b17_5": "釋迦老子。",
    "X71n1418_002:0491b18_6": "四楞塌地了也。",
    "X71n1418_002:0491b18_7": "還有扶得起者麼。",
    "X71n1418_002:0491b18_8": "唯此一事實。",
    "X71n1418_002:0491b19_0": "餘二則非真。",
    "X71n1418_002:0491b19_1": "忽若睦州和尚道。",
    "X71n1418_002:0491b19_2": "三九二十七。",
    "X71n1418_002:0491b19_3": "菩提涅槃。",
    "X71n1418_002:0491b20_4": "真如解脫。",
    "X71n1418_002:0491b20_5": "有什麼過。",
    "X71n1418_002:0491b20_6": "擊拂子。",
    "X71n1418_002:0491b20_7": "下座。",
    "X71n1418_002:0491b21_0": "元旦上堂。",
    "X71n1418_002:0491b21_1": "新年頭。",
    "X71n1418_002:0491b21_2": "不可與諸人葛藤。",
    "X71n1418_002:0491b21_3": "德山棒臨濟喝。",
    "X71n1418_002:0491b22_0": "拈放一邊。",
    "X71n1418_002:0491b22_1": "你道。",
    "X71n1418_002:0491b22_2": "趙州和尚。",
    "X71n1418_002:0491b22_3": "使得十二時辰。",
    "X71n1418_002:0491b22_4": "還有勘驗處也無。",
    "X71n1418_002:0491b23_5": "擊拂子。",
    "X71n1418_002:0491b23_6": "家家門前赫日月。",
    "X71n1418_002:0491b23_7": "太平不用將軍威。",
    "X71n1418_002:0491b24_0": "上堂。",
    "X71n1418_002:0491b24_1": "鳥窠吹起布毛。",
    "X71n1418_002:0491b24_2": "通侍者便解悟去。",
    "X71n1418_002:0491b24_3": "如蟲禦木。",
    "X71n1418_002:0491b24_4": "偶爾成文。",
    "X71n1418_002:0491c01_5": "雲門颺下柴爿。",
    "X71n1418_002:0491c01_6": "一大藏教。",
    "X71n1418_002:0491c01_7": "只這是為蛇畫足。",
    "X71n1418_002:0491c02_0": "取笑旁觀。",
    "X71n1418_002:0491c02_1": "徑山與麼批判。",
    "X71n1418_002:0491c02_2": "譬如獅子王哮吼。",
    "X71n1418_002:0491c02_3": "諸獅子兒聞之。",
    "X71n1418_002:0491c03_4": "悉增勇徤。",
    "X71n1418_002:0491c03_5": "若是野干之流。",
    "X71n1418_002:0491c03_6": "自懷狂怖。",
    "X71n1418_002:0491c03_7": "又爭怪得。",
    "X71n1418_002:0491c04_8": "喝一喝。",
    "X71n1418_002:0491c04_9": "下座。",
    "X71n1418_002:0491c05_0": "上堂。",
    "X71n1418_002:0491c05_1": "最初一機。",
    "X71n1418_002:0491c05_2": "末後一句。",
    "X71n1418_002:0491c05_3": "耀古騰今。",
    "X71n1418_002:0491c05_4": "撑天拄地。",
    "X71n1418_002:0491c05_5": "明眼衲僧。",
    "X71n1418_002:0491c06_6": "無摸索處。",
    "X71n1418_002:0491c06_7": "覿面當機。",
    "X71n1418_002:0491c06_8": "一槌粉碎。",
    "X71n1418_002:0491c06_9": "這箇說話。",
    "X71n1418_002:0491c06_10": "惟悟者方知。",
    "X71n1418_002:0491c07_11": "若是無智人前。",
    "X71n1418_002:0491c07_12": "未免翻成戲論。",
    "X71n1418_002:0491c07_13": "驀拈拄杖。",
    "X71n1418_002:0491c07_14": "卓一下云。",
    "X71n1418_002:0491c08_15": "青山不鎻長飛勢。",
    "X71n1418_002:0491c08_16": "滄海合知來處高。",
    "X71n1418_002:0491c09_0": "上堂。",
    "X71n1418_002:0491c09_1": "今朝五月初一。",
    "X71n1418_002:0491c09_2": "箇事為君指出。",
    "X71n1418_002:0491c09_3": "堦下流水潺湲。",
    "X71n1418_002:0491c10_0": "門外新篁蓊鬱。",
    "X71n1418_002:0491c10_1": "非惟歷歷明明。",
    "X71n1418_002:0491c10_2": "抑且綿綿密密。",
    "X71n1418_002:0491c10_3": "老僧更無傳持。",
    "X71n1418_002:0491c11_4": "大眾何有得失。",
    "X71n1418_002:0491c11_5": "回顧侍者云。",
    "X71n1418_002:0491c11_6": "忽若有个無面目漢。",
    "X71n1418_002:0491c12_7": "到來相看。",
    "X71n1418_002:0491c12_8": "只向他道。",
    "X71n1418_002:0491c12_9": "不必不必。",
    "X71n1418_002:0491c12_10": "便下座。",
    "X71n1418_002:0491c13_0": "解夏上堂。",
    "X71n1418_002:0491c13_1": "諸法從本來。",
    "X71n1418_002:0491c13_2": "常自寂滅相。",
    "X71n1418_002:0491c13_3": "若無諸佛住持首楞嚴定。",
    "X71n1418_002:0491c14_4": "眾生隨順無明業識。",
    "X71n1418_002:0491c14_5": "然迷悟在人。",
    "X71n1418_002:0491c14_6": "而不在法。",
    "X71n1418_002:0491c15_7": "徑山。",
    "X71n1418_002:0491c15_8": "一夏與諸人同出同入。",
    "X71n1418_002:0491c15_9": "要且不離一相三昧。",
    "X71n1418_002:0491c16_0": "今當自恣之辰。",
    "X71n1418_002:0491c16_1": "西天蠟人氷。",
    "X71n1418_002:0491c16_2": "東土銕彈子。",
    "X71n1418_002:0491c16_3": "即不問。",
    "X71n1418_002:0491c16_4": "拈拄杖云。",
    "X71n1418_002:0491c17_5": "拄杖子。",
    "X71n1418_002:0491c17_6": "穿過釋迦老子鼻孔。",
    "X71n1418_002:0491c17_7": "因甚諸人罔知痛覺。",
    "X71n1418_002:0491c18_8": "靠拄杖云。",
    "X71n1418_002:0491c18_9": "大海若無山隔斷。",
    "X71n1418_002:0491c18_10": "天光直與水相連。",
    "X71n1418_002:0491c19_0": "上堂。",
    "X71n1418_002:0491c19_1": "玄沙因皷山至。",
    "X71n1418_002:0491c19_2": "畵一圓相。",
    "X71n1418_002:0491c19_3": "山云。",
    "X71n1418_002:0491c19_4": "人人出這箇不得。",
    "X71n1418_002:0491c20_5": "沙云。",
    "X71n1418_002:0491c20_6": "誠知你向驢胎馬腹作活計。",
    "X71n1418_002:0491c20_7": "山云。",
    "X71n1418_002:0491c20_8": "和尚又作麼生。",
    "X71n1418_002:0491c21_9": "沙云。",
    "X71n1418_002:0491c21_10": "人人出這個不得。",
    "X71n1418_002:0491c21_11": "山云。",
    "X71n1418_002:0491c21_12": "和尚為什麼道得。",
    "X71n1418_002:0491c22_0": "某甲道不得。",
    "X71n1418_002:0491c22_1": "沙云。",
    "X71n1418_002:0491c22_2": "我得你不得。",
    "X71n1418_002:0491c22_3": "師云。",
    "X71n1418_002:0491c22_4": "玄沙與皷山。",
    "X71n1418_002:0491c22_5": "難兄亦難弟。",
    "X71n1418_002:0491c23_6": "若要出得這個。",
    "X71n1418_002:0491c23_7": "總欠悟在。",
    "X71n1418_002:0491c23_8": "雪竇云。",
    "X71n1418_002:0491c23_9": "只知貪觀白浪。",
    "X71n1418_002:0491c24_10": "不知失却手橈。",
    "X71n1418_002:0491c24_11": "師云。",
    "X71n1418_002:0491c24_12": "緇素眼何在。",
    "X71n1418_002:0491c24_13": "驀拈拄杖。",
    "X71n1418_002:0492a01_0": "畫一畫云。",
    "X71n1418_002:0492a01_1": "一把柳絲收不得。",
    "X71n1418_002:0492a01_2": "和烟搭在玉闌干。",
    "X71n1418_002:0492a02_0": "上堂。",
    "X71n1418_002:0492a02_1": "明明向汝道。",
    "X71n1418_002:0492a02_2": "開口不在舌頭上。",
    "X71n1418_002:0492a02_3": "擊石火閃電光。",
    "X71n1418_002:0492a03_0": "搆得搆不得。",
    "X71n1418_002:0492a03_1": "未免喪身失命。",
    "X71n1418_002:0492a03_2": "若自伶俐漢。",
    "X71n1418_002:0492a03_3": "聞與麼道。",
    "X71n1418_002:0492a04_0": "自然別有出身之句。",
    "X71n1418_002:0492a04_1": "有麼有麼。",
    "X71n1418_002:0492a04_2": "擊拂子。",
    "X71n1418_002:0492a04_3": "不是龍門客。",
    "X71n1418_002:0492a05_0": "切忌遭點額。",
    "X71n1418_002:0492a06_0": "上堂。",
    "X71n1418_002:0492a06_1": "釋迦掩室於摩竭提國。",
    "X71n1418_002:0492a06_2": "淨名杜口於毗耶離城。",
    "X71n1418_002:0492a07_0": "是皆靈龜曳尾。",
    "X71n1418_002:0492a07_1": "拂跡跡生。",
    "X71n1418_002:0492a07_2": "太陽溢目。",
    "X71n1418_002:0492a07_3": "萬里不掛片雲。",
    "X71n1418_002:0492a08_0": "爭奈覆盆之下。",
    "X71n1418_002:0492a08_1": "漆黑黑地。",
    "X71n1418_002:0492a08_2": "四來禪侶。",
    "X71n1418_002:0492a08_3": "同此坐夏。",
    "X71n1418_002:0492a08_4": "既無兩錯商量。",
    "X71n1418_002:0492a09_5": "亦無正因可說。",
    "X71n1418_002:0492a09_6": "蒲團靜倚無餘事。",
    "X71n1418_002:0492a09_7": "永日寥寥謝太平。",
    "X71n1418_002:0492a11_0": "上堂。",
    "X71n1418_002:0492a11_1": "心心不昧。",
    "X71n1418_002:0492a11_2": "法法無差。",
    "X71n1418_002:0492a11_3": "金剛與泥人揩背。",
    "X71n1418_002:0492a11_4": "即不問。",
    "X71n1418_002:0492a12_0": "且道。",
    "X71n1418_002:0492a12_1": "鴟吻咬却佛殿脊。",
    "X71n1418_002:0492a12_2": "還有勘驗處也無。",
    "X71n1418_002:0492a12_3": "昨夜三更失却牛。",
    "X71n1418_002:0492a13_4": "天明起來捉得賊。",
    "X71n1418_002:0492a13_5": "賊賊。",
    "X71n1418_002:0492a13_6": "便下座。",
    "X71n1418_002:0492a14_0": "上堂。",
    "X71n1418_002:0492a14_1": "布袋頭解開了。",
    "X71n1418_002:0492a14_2": "十方世界。",
    "X71n1418_002:0492a14_3": "蕩蕩無邊。",
    "X71n1418_002:0492a14_4": "衲僧家。",
    "X71n1418_002:0492a14_5": "緊峭草鞋。",
    "X71n1418_002:0492a15_6": "橫擔拄杖。",
    "X71n1418_002:0492a15_7": "東西南北。",
    "X71n1418_002:0492a15_8": "去住自由。",
    "X71n1418_002:0492a15_9": "不妨慶快。",
    "X71n1418_002:0492a15_10": "忽若撞著杜撰巡官問道。",
    "X71n1418_002:0492a16_11": "上座。",
    "X71n1418_002:0492a16_12": "如何是行脚事。",
    "X71n1418_002:0492a16_13": "也須好好祗對他始得。",
    "X71n1418_002:0492a17_14": "驀拈拄杖。",
    "X71n1418_002:0492a17_15": "卓一下云。",
    "X71n1418_002:0492a17_16": "不向藍田射石虎。",
    "X71n1418_002:0492a18_17": "何人知是李將軍。",
    "X71n1418_002:0492a19_0": "璣藏主火。",
    "X71n1418_002:0492a19_1": "辯傾河漢。",
    "X71n1418_002:0492a19_2": "文綴珠璣。",
    "X71n1418_002:0492a19_3": "生死岸頭。",
    "X71n1418_002:0492a19_4": "總用不著。",
    "X71n1418_002:0492a20_0": "一大藏教。",
    "X71n1418_002:0492a20_1": "是箇之字。",
    "X71n1418_002:0492a20_2": "祖師西來。",
    "X71n1418_002:0492a20_3": "是箇右字。",
    "X71n1418_002:0492a20_4": "提起火云。",
    "X71n1418_002:0492a21_0": "勝熱門頭參得透。",
    "X71n1418_002:0492a21_1": "丙丁童子念摩訶。",
    "X71n1418_002:0492a22_0": "上堂。",
    "X71n1418_002:0492a22_1": "八月秋何處熱。",
    "X71n1418_002:0492a22_2": "岩桂吹香滿寥泬。",
    "X71n1418_002:0492a22_3": "風景凄清。",
    "X71n1418_002:0492a22_4": "泉聲幽咽。",
    "X71n1418_002:0492a23_5": "祖意明明誰辨別。",
    "X71n1418_002:0492a23_6": "大藏小藏。",
    "X71n1418_002:0492a23_7": "橫說竪說。",
    "X71n1418_002:0492a23_8": "不出如今箇時節。",
    "X71n1418_002:0492a24_9": "同不同別不別。",
    "X71n1418_002:0492a24_10": "堪悲堪咲老寒山。",
    "X71n1418_002:0492a24_11": "剛道吾心似秋月。",
    "X71n1418_002:0492b01_12": "拍禪床。",
    "X71n1418_002:0492b01_13": "下座。",
    "X71n1418_002:0492b02_0": "上堂。",
    "X71n1418_002:0492b02_1": "我宗無語句。",
    "X71n1418_002:0492b02_2": "亦無一法與人。",
    "X71n1418_002:0492b02_3": "達磨大師。",
    "X71n1418_002:0492b02_4": "從南天笁國。",
    "X71n1418_002:0492b03_5": "來我東震旦土。",
    "X71n1418_002:0492b03_6": "唯傳心印。",
    "X71n1418_002:0492b03_7": "接上乘人。",
    "X71n1418_002:0492b03_8": "大是可笑。",
    "X71n1418_002:0492b04_0": "笑須三十年。",
    "X71n1418_002:0492b04_1": "眾中忽有个漢。",
    "X71n1418_002:0492b04_2": "出來道。",
    "X71n1418_002:0492b04_3": "徑山與麼道。",
    "X71n1418_002:0492b04_4": "也好笑三十年。",
    "X71n1418_002:0492b05_5": "老僧下禪床。",
    "X71n1418_002:0492b05_6": "與伊握手共笑。",
    "X71n1418_002:0492b05_7": "當是之時。",
    "X71n1418_002:0492b06_0": "也無佛。",
    "X71n1418_002:0492b06_1": "也無祖。",
    "X71n1418_002:0492b06_2": "也無禪。",
    "X71n1418_002:0492b06_3": "也無道。",
    "X71n1418_002:0492b06_4": "也無人。",
    "X71n1418_002:0492b06_5": "也無我。",
    "X71n1418_002:0492b06_6": "豈不快哉。",
    "X71n1418_002:0492b07_7": "拈拄杖。",
    "X71n1418_002:0492b07_8": "有麼有麼。",
    "X71n1418_002:0492b07_9": "卓拄杖。",
    "X71n1418_002:0492b07_10": "囉囉招。",
    "X71n1418_002:0492b07_11": "囉囉搖。",
    "X71n1418_002:0492b07_12": "囉囉送。",
    "X71n1418_002:0492b08_13": "莫怪空疎。",
    "X71n1418_002:0492b08_14": "伏惟珍重。",
    "X71n1418_002:0492b09_0": "上堂。",
    "X71n1418_002:0492b09_1": "前念昬迷是病。",
    "X71n1418_002:0492b09_2": "後念覺悟是藥。",
    "X71n1418_002:0492b09_3": "直教脫體風流。",
    "X71n1418_002:0492b10_0": "藥病盡情拈却。",
    "X71n1418_002:0492b10_1": "所以道。",
    "X71n1418_002:0492b10_2": "一大藏教。",
    "X71n1418_002:0492b10_3": "盡是療狂子之方。",
    "X71n1418_002:0492b11_0": "都無實義。",
    "X71n1418_002:0492b11_1": "只如文殊舉起玻璃盞。",
    "X71n1418_002:0492b11_2": "問無著云。",
    "X71n1418_002:0492b11_3": "南方還有者個也無。",
    "X71n1418_002:0492b12_4": "畢竟是何道理。",
    "X71n1418_002:0492b12_5": "拈拄杖。",
    "X71n1418_002:0492b12_6": "畫一畫云。",
    "X71n1418_002:0492b12_7": "上大人丘乙己。",
    "X71n1418_002:0492b13_8": "化三千七十士。",
    "X71n1418_002:0492b13_9": "可知禮也。",
    "X71n1418_002:0492b14_0": "浴佛上堂。",
    "X71n1418_002:0492b14_1": "舉藥山因遵布衲作殿主。",
    "X71n1418_002:0492b14_2": "浴佛次。",
    "X71n1418_002:0492b14_3": "乃問云。",
    "X71n1418_002:0492b15_0": "汝只浴得這個。",
    "X71n1418_002:0492b15_1": "還浴得那個麼。",
    "X71n1418_002:0492b15_2": "遵云。",
    "X71n1418_002:0492b15_3": "把將那個來。",
    "X71n1418_002:0492b15_4": "山休去。",
    "X71n1418_002:0492b16_5": "師云。",
    "X71n1418_002:0492b16_6": "藥山。",
    "X71n1418_002:0492b16_7": "能縱不能奪。",
    "X71n1418_002:0492b16_8": "遵布衲。",
    "X71n1418_002:0492b16_9": "能奪不能縱。",
    "X71n1418_002:0492b16_10": "摠未具超宗眼在。",
    "X71n1418_002:0492b17_11": "黃龍南禪師云。",
    "X71n1418_002:0492b17_12": "二尊宿。",
    "X71n1418_002:0492b17_13": "一出一入。",
    "X71n1418_002:0492b17_14": "未見輸贏。",
    "X71n1418_002:0492b18_15": "三十年後。",
    "X71n1418_002:0492b18_16": "不得錯舉。",
    "X71n1418_002:0492b18_17": "早是錯下名言。",
    "X71n1418_002:0492b18_18": "徑山見處。",
    "X71n1418_002:0492b19_19": "也要諸人共知。",
    "X71n1418_002:0492b19_20": "今日殿中普請浴佛。",
    "X71n1418_002:0492b19_21": "這個那個。",
    "X71n1418_002:0492b19_22": "不得動著。",
    "X71n1418_002:0492b20_23": "杓柄到手。",
    "X71n1418_002:0492b20_24": "更莫顢頇。",
    "X71n1418_002:0492b20_25": "擊拂子。",
    "X71n1418_002:0492b20_26": "將此深心奉塵剎。",
    "X71n1418_002:0492b21_27": "是則名為報佛恩。",
    "X71n1418_002:0492b22_0": "上堂。",
    "X71n1418_002:0492b22_1": "舉雲門大師。",
    "X71n1418_002:0492b22_2": "因僧問。",
    "X71n1418_002:0492b22_3": "如何是和尚家風。",
    "X71n1418_002:0492b22_4": "答云。",
    "X71n1418_002:0492b22_5": "門外讀書人報來。",
    "X71n1418_002:0492b23_6": "師頌云。",
    "X71n1418_002:0492b23_7": "問著和尚家風。",
    "X71n1418_002:0492b23_8": "開口便成話墮。",
    "X71n1418_002:0492b24_9": "門外讀書人來。",
    "X71n1418_002:0492b24_10": "未免之乎者也。",
    "X71n1418_002:0492c01_0": "上堂。",
    "X71n1418_002:0492c01_1": "諸方說禪說道。",
    "X71n1418_002:0492c01_2": "舉古舉今。",
    "X71n1418_002:0492c01_3": "龍象駢闐。",
    "X71n1418_002:0492c01_4": "法筵隆盛。",
    "X71n1418_002:0492c02_0": "徑山這裏。",
    "X71n1418_002:0492c02_1": "一味據欵結案。",
    "X71n1418_002:0492c02_2": "有人渾身錦繡入來。",
    "X71n1418_002:0492c02_3": "直教他寸絲不挂而去。",
    "X71n1418_002:0492c03_4": "有人不挂寸絲入來。",
    "X71n1418_002:0492c03_5": "直教他渾身錦繡而去。",
    "X71n1418_002:0492c04_6": "眾中忽有個漢。",
    "X71n1418_002:0492c04_7": "出來道。",
    "X71n1418_002:0492c04_8": "總不與麼來時如何。",
    "X71n1418_002:0492c05_9": "二十棒一棒也不放過。",
    "X71n1418_002:0492c05_10": "大眾且道。",
    "X71n1418_002:0492c05_11": "此棒是賞伊罰伊。",
    "X71n1418_002:0492c06_12": "拈拄杖云。",
    "X71n1418_002:0492c06_13": "他時異日。",
    "X71n1418_002:0492c06_14": "逢人不得錯舉。",
    "X71n1418_002:0492c06_15": "卓拄杖下座。",
    "X71n1418_002:0492c07_0": "上堂。",
    "X71n1418_002:0492c07_1": "前半夏過去已過去。",
    "X71n1418_002:0492c07_2": "後半夏未來猶未來。",
    "X71n1418_002:0492c07_3": "即今中夏。",
    "X71n1418_002:0492c08_4": "現在空寂。",
    "X71n1418_002:0492c08_5": "過去心不可得。",
    "X71n1418_002:0492c08_6": "未來心不可得。",
    "X71n1418_002:0492c08_7": "現在心不可得。",
    "X71n1418_002:0492c09_8": "即心即佛。",
    "X71n1418_002:0492c09_9": "非心非佛。",
    "X71n1418_002:0492c09_10": "不是心不是佛不是物。",
    "X71n1418_002:0492c10_11": "三脚驢子弄蹄行。",
    "X71n1418_002:0492c10_12": "頂門放出遼天鶻。",
    "X71n1418_002:0492c11_0": "上堂。",
    "X71n1418_002:0492c11_1": "舉五祖演和尚。",
    "X71n1418_002:0492c11_2": "因諸寺長老入山。",
    "X71n1418_002:0492c11_3": "上堂云。",
    "X71n1418_002:0492c11_4": "臨濟入門便喝。",
    "X71n1418_002:0492c12_5": "是甚麼熱碗鳴聲。",
    "X71n1418_002:0492c12_6": "德山入門便棒。",
    "X71n1418_002:0492c12_7": "抝曲作直。",
    "X71n1418_002:0492c13_8": "雲門三句。",
    "X71n1418_002:0492c13_9": "洞山五位。",
    "X71n1418_002:0492c13_10": "大開眼了作夢。",
    "X71n1418_002:0492c13_11": "何故如此。",
    "X71n1418_002:0492c13_12": "國清才子貴。",
    "X71n1418_002:0492c14_13": "家富小兒嬌。",
    "X71n1418_002:0492c14_14": "師云。",
    "X71n1418_002:0492c14_15": "五祖老人。",
    "X71n1418_002:0492c14_16": "大似將常住物。",
    "X71n1418_002:0492c15_17": "作自己人情。",
    "X71n1418_002:0492c15_18": "徑山見處。",
    "X71n1418_002:0492c15_19": "也要諸人共知。",
    "X71n1418_002:0492c15_20": "乃豎起拂子云。",
    "X71n1418_002:0492c16_21": "德山臨濟洞山雲門。",
    "X71n1418_002:0492c16_22": "只今在拂子頭上。",
    "X71n1418_002:0492c16_23": "各說不二法門了。",
    "X71n1418_002:0492c17_24": "一時走入淨瓶裏。",
    "X71n1418_002:0492c17_25": "澡浴去也。",
    "X71n1418_002:0492c17_26": "何故如此。",
    "X71n1418_002:0492c17_27": "水流元在海。",
    "X71n1418_002:0492c18_28": "月落不離天。",
    "X71n1418_002:0492c19_0": "上堂。",
    "X71n1418_002:0492c19_1": "舉雲門和尚。",
    "X71n1418_002:0492c19_2": "因僧問。",
    "X71n1418_002:0492c19_3": "樹凋葉落時如何。",
    "X71n1418_002:0492c19_4": "門云。",
    "X71n1418_002:0492c19_5": "體露金風。",
    "X71n1418_002:0492c20_6": "師云。",
    "X71n1418_002:0492c20_7": "這僧置箇問頭。",
    "X71n1418_002:0492c20_8": "不妨親切。",
    "X71n1418_002:0492c20_9": "只如雲門與麼答。",
    "X71n1418_002:0492c21_10": "還有為人處也無。",
    "X71n1418_002:0492c21_11": "徑山則不然。",
    "X71n1418_002:0492c21_12": "忽有人與麼問。",
    "X71n1418_002:0492c22_0": "但向伊道。",
    "X71n1418_002:0492c22_1": "不因夜來鴈。",
    "X71n1418_002:0492c22_2": "爭見海門秋。",
    "X71n1418_002:0492c22_3": "拈拄杖。",
    "X71n1418_002:0492c22_4": "畫一畫。",
    "X71n1418_002:0492c23_0": "下座。",
    "X71n1418_002:0492c24_0": "呆菴莊禪師語錄卷之二"
}