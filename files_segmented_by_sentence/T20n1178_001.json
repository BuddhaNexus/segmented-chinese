[
    {
        "source_sentence": "文殊菩薩獻佛陀羅尼名烏蘇",
        "from": "T20n1178_001:0778a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吒此云滅婬慾却我慢",
        "from": "T20n1178_001:0778a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時佛勅阿難。為未來沒苦眾生。廣宣流布。時",
        "from": "T20n1178_001:0778a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊菩薩先說偈言。",
        "from": "T20n1178_001:0778a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生類　　迴沒婬鬼界",
        "from": "T20n1178_001:0778a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能覺之者　　唯我能救拔",
        "from": "T20n1178_001:0778a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永斷生死本　　普處寂滅樂",
        "from": "T20n1178_001:0778a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T20n1178_001:0778a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句利句利帝那憂拙憂拙帝那度呼度呼帝那究吒究吒帝那若蜜都若蜜都帝那究吒呼究吒呼帝那憂守憂守帝那耶蜜若耶蜜若帝那度呼吒究吒多薩嚩二合訶右誦呪三遍。",
        "from": "T20n1178_001:0778a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結縷作七結繫脚。",
        "from": "T20n1178_001:0778a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是呪能令諸失心者。",
        "from": "T20n1178_001:0778a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還得正念。",
        "from": "T20n1178_001:0778a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅婬慾火除我慢結。",
        "from": "T20n1178_001:0778a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三毒垢盡自然清涼。",
        "from": "T20n1178_001:0778a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有精神。",
        "from": "T20n1178_001:0778a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈在無明重淵之下。",
        "from": "T20n1178_001:0778a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久溺生死不得出要。",
        "from": "T20n1178_001:0778a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼深可傷。",
        "from": "T20n1178_001:0778a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人心得醒悟極自厭污。",
        "from": "T20n1178_001:0778a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是凡夫愚下鬼神畜生之所行處。",
        "from": "T20n1178_001:0778a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非梵行所宜。",
        "from": "T20n1178_001:0778a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非聖人所願。",
        "from": "T20n1178_001:0778a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此之人方可受與此陀羅尼。",
        "from": "T20n1178_001:0778a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿傳矯俗疑謗少信。",
        "from": "T20n1178_001:0778a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱持無驗即轉退墮。",
        "from": "T20n1178_001:0778a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若至誠誦者慾火漸盡。",
        "from": "T20n1178_001:0778a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結使滅已心得解脫。",
        "from": "T20n1178_001:0778a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心解脫已則得道果。",
        "from": "T20n1178_001:0778a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則神力功用誠諦不虛。",
        "from": "T20n1178_001:0778a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行此法者斷酒五辛血食。",
        "from": "T20n1178_001:0778a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男子唯用九九八十一日。",
        "from": "T20n1178_001:0778a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女子唯用七七四十九日。",
        "from": "T20n1178_001:0778a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜六時勤心讀誦。",
        "from": "T20n1178_001:0778a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒沈水白檀香散花。",
        "from": "T20n1178_001:0778a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養十方諸佛。",
        "from": "T20n1178_001:0778a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝三夜三慎勿廢忘。",
        "from": "T20n1178_001:0778a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日數未滿餘時之中。",
        "from": "T20n1178_001:0778a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨處山窟精舍。",
        "from": "T20n1178_001:0778b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聚落即淨室四向遠人。",
        "from": "T20n1178_001:0778b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當深生欣躍自發慶幸。",
        "from": "T20n1178_001:0778b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今我遭遇大聖神力。",
        "from": "T20n1178_001:0778b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此身宜至佛身。",
        "from": "T20n1178_001:0778b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不懼淪溺。",
        "from": "T20n1178_001:0778b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是淨心念念信向。",
        "from": "T20n1178_001:0778b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷諸惡作轉雜言論離間之語。",
        "from": "T20n1178_001:0778b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不念名利。",
        "from": "T20n1178_001:0778b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是日數足已。",
        "from": "T20n1178_001:0778b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定解脫其心泰然無復欲慢。",
        "from": "T20n1178_001:0778b05_16",
        "context_with_next_sentence": true
    }
]