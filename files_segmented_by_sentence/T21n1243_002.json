[
    {
        "source_sentence": "佛說出生一切如來法眼遍照大",
        "from": "T21n1243_002:0211b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力明王經卷下",
        "from": "T21n1243_002:0211b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天中印度摩伽陀國那爛陀寺",
        "from": "T21n1243_002:0211b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏賜紫沙門臣法護奉　詔譯爾時金剛手菩薩摩訶薩顧𥌊曼拏攞眾。",
        "from": "T21n1243_002:0211b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目如師子威德自在。",
        "from": "T21n1243_002:0211b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為伊舍那天步多主說大力明王曼拏攞法。",
        "from": "T21n1243_002:0211b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告言聖者若有入此大忿怒曼拏攞中者。",
        "from": "T21n1243_002:0211b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能成就一切事業命無中夭。",
        "from": "T21n1243_002:0211b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離一切惡病纏身不生魔界。",
        "from": "T21n1243_002:0211b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生見者歡喜。",
        "from": "T21n1243_002:0211b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能遠離一切冤家。",
        "from": "T21n1243_002:0211b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於後一切真言教法悉得成就。",
        "from": "T21n1243_002:0211b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能成就一切忿怒。",
        "from": "T21n1243_002:0211b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一切灌頂中福故吉祥莊嚴。",
        "from": "T21n1243_002:0211b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時先安布此大忿怒曼拏攞。",
        "from": "T21n1243_002:0211b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此經一萬遍得善境界。",
        "from": "T21n1243_002:0211b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得覩此曼拏攞教主印可。",
        "from": "T21n1243_002:0211b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後方學此真言壇法。",
        "from": "T21n1243_002:0211b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須八日不食。",
        "from": "T21n1243_002:0211b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命三寶發大慈悲菩提心故。",
        "from": "T21n1243_002:0211b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依時作法成就事故。",
        "from": "T21n1243_002:0211b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "關閉冤家死者還活。",
        "from": "T21n1243_002:0211b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此忿怒大威德。",
        "from": "T21n1243_002:0211b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令大業魔王歸依三寶佛法僧眾。",
        "from": "T21n1243_002:0211b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復一切惡魔鬼魅而不殄滅。",
        "from": "T21n1243_002:0211b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大力明王若有受持之者。",
        "from": "T21n1243_002:0211b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能降伏一切冤魔。",
        "from": "T21n1243_002:0211b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切藥叉洛　乞叉二合畢哩二合哆。",
        "from": "T21n1243_002:0211b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯吒布怛曩。",
        "from": "T21n1243_002:0211b29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拏倪寧。",
        "from": "T21n1243_002:0211c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑𠆙切身薩嗘攞。",
        "from": "T21n1243_002:0211c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦波三麼二合囉。",
        "from": "T21n1243_002:0211c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離如是等一切怕怖。",
        "from": "T21n1243_002:0211c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切枷鎖一切中天。",
        "from": "T21n1243_002:0211c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切迷惑一切疫病禁繫貧窮。",
        "from": "T21n1243_002:0211c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此正法若有讀誦受持。",
        "from": "T21n1243_002:0211c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得一切財寶無所乏少。",
        "from": "T21n1243_002:0211c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天早時於七晝夜中。",
        "from": "T21n1243_002:0211c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦此大力明王即降大雨。",
        "from": "T21n1243_002:0211c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不降雨令彼天眾破壞殄滅。",
        "from": "T21n1243_002:0211c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯哩二合瑟拏二合龍王設羯囉二合龍王阿難多龍王。",
        "from": "T21n1243_002:0211c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等龍王眾令降大雨。",
        "from": "T21n1243_002:0211c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不降時亦令彼死。",
        "from": "T21n1243_002:0211c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復此經如前依法。",
        "from": "T21n1243_002:0211c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四方河岸海岸池潭四邊舍利塔前。",
        "from": "T21n1243_002:0211c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛手大菩薩。",
        "from": "T21n1243_002:0211c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以赤栴檀迦囉尾囉花紅蓮花阿底目羯哆二合花。",
        "from": "T21n1243_002:0211c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繒綵幢幡皆以赤色。",
        "from": "T21n1243_002:0211c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香水滿瓶如法依時。",
        "from": "T21n1243_002:0211c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精勤念誦得大福聚。",
        "from": "T21n1243_002:0211c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復或以樺皮。",
        "from": "T21n1243_002:0211c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此大力明王真言。",
        "from": "T21n1243_002:0211c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於旌旗之上或以頂戴。",
        "from": "T21n1243_002:0211c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得入陣無傷相敵得勝。",
        "from": "T21n1243_002:0211c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弓箭槍刀如花被體。",
        "from": "T21n1243_002:0211c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者歡喜而生愛敬。",
        "from": "T21n1243_002:0211c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時魔王遶佛三匝退坐一面。",
        "from": "T21n1243_002:0211c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊云何名大力。",
        "from": "T21n1243_002:0211c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告魔王如來名大力。",
        "from": "T21n1243_002:0211c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法藏名大力。",
        "from": "T21n1243_002:0211c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法名大力法眼名大力。",
        "from": "T21n1243_002:0211c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘名大力。",
        "from": "T21n1243_002:0211c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手名大力。",
        "from": "T21n1243_002:0211c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時魔王讚金剛手祕密主言。",
        "from": "T21n1243_002:0211c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉祕密主。",
        "from": "T21n1243_002:0211c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從今向去不敢惱亂一切修行之者。",
        "from": "T21n1243_002:0211c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓歸三寶佛法僧眾。",
        "from": "T21n1243_002:0211c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願為優婆塞常持淨戒。",
        "from": "T21n1243_002:0211c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願天解脫為我安樂。",
        "from": "T21n1243_002:0211c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為法眾擁護受持大力明王及諸眾生。",
        "from": "T21n1243_002:0211c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告魔王言。",
        "from": "T21n1243_002:0211c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業種此經若有受持讀誦。",
        "from": "T21n1243_002:0211c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得遠離地獄餓鬼畜生閻羅王界種種苦惱當得生天。",
        "from": "T21n1243_002:0211c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經二十千劫常為天主。",
        "from": "T21n1243_002:0211c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下生閻浮後為金輪王王四天下。",
        "from": "T21n1243_002:0211c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未來世復得阿耨多羅三藐三菩提。",
        "from": "T21n1243_002:0211c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大力明王乃至清淨不清淨。",
        "from": "T21n1243_002:0211c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食與不食。",
        "from": "T21n1243_002:0211c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨戒不淨戒俱無障礙。",
        "from": "T21n1243_002:0211c29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但持此真言所求皆得。",
        "from": "T21n1243_002:0212a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況依法淨戒無所不從。",
        "from": "T21n1243_002:0212a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時尊者須菩提與自眾俱來在會坐。",
        "from": "T21n1243_002:0212a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起白佛言。",
        "from": "T21n1243_002:0212a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何受持此大力明王心陀羅尼而得解脫。",
        "from": "T21n1243_002:0212a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言須菩提汝問金剛手祕密主。",
        "from": "T21n1243_002:0212a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故時須菩提即白金剛手言。",
        "from": "T21n1243_002:0212a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密主云何受持此大力明王心所得何果。",
        "from": "T21n1243_002:0212a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T21n1243_002:0212a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得倉庫盈滿名衣上服金銀珍寶象馬牛羊所求施與。",
        "from": "T21n1243_002:0212a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提言。",
        "from": "T21n1243_002:0212a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如是等廣大果報。",
        "from": "T21n1243_002:0212a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言須菩提如是如是。",
        "from": "T21n1243_002:0212a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至盡眾生煩惱果報故。",
        "from": "T21n1243_002:0212a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為住功德果故。",
        "from": "T21n1243_002:0212a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至阿耨多羅三藐三菩提功德道故。",
        "from": "T21n1243_002:0212a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提言善哉善哉金剛手。",
        "from": "T21n1243_002:0212a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以祕密相種種莊嚴。",
        "from": "T21n1243_002:0212a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大智力灌頂辯才得無相施。",
        "from": "T21n1243_002:0212a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大戒大智慧。",
        "from": "T21n1243_002:0212a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大福大力。",
        "from": "T21n1243_002:0212a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大威德大功德頂。",
        "from": "T21n1243_002:0212a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大力明王經。",
        "from": "T21n1243_002:0212a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得十方諸佛同來灌頂。",
        "from": "T21n1243_002:0212a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手此經威德為。",
        "from": "T21n1243_002:0212a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸如來摩頂授記得大安樂。",
        "from": "T21n1243_002:0212a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼或於山間石壁曠野陂湖江河池潭。",
        "from": "T21n1243_002:0212a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦遠離一切怖畏。",
        "from": "T21n1243_002:0212a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T21n1243_002:0212a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白世尊言此經若有持者復為他說。",
        "from": "T21n1243_002:0212a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命百歲無諸橫苦。",
        "from": "T21n1243_002:0212a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手復白世尊言。",
        "from": "T21n1243_002:0212a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此正法得福如是。",
        "from": "T21n1243_002:0212a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當何名之復云何受持。",
        "from": "T21n1243_002:0212a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言金剛手此經名出生一切如來故。",
        "from": "T21n1243_002:0212a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名法遍照故。",
        "from": "T21n1243_002:0212a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名法眼故。",
        "from": "T21n1243_002:0212a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名一切義成就故。",
        "from": "T21n1243_002:0212a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名一切如來法雲故。",
        "from": "T21n1243_002:0212a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名盡一切業障總持故。",
        "from": "T21n1243_002:0212a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名成就一切明王故亦名般若波羅蜜多故。",
        "from": "T21n1243_002:0212a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名一切如來最初。",
        "from": "T21n1243_002:0212a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界故亦名大力明王故。",
        "from": "T21n1243_002:0212a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手若有聞此正法。",
        "from": "T21n1243_002:0212a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能受持讀誦書寫供養。",
        "from": "T21n1243_002:0212a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如供養過去未來現在諸佛世尊全身舍利塔故。",
        "from": "T21n1243_002:0212a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言善哉善哉。",
        "from": "T21n1243_002:0212a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說如是甚深微妙正法功德變化莊嚴我。",
        "from": "T21n1243_002:0212a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當受持佛言金剛手若有善男子善女人。",
        "from": "T21n1243_002:0212b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此正法者。",
        "from": "T21n1243_002:0212b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸業障如河岸樹速疾破壞。",
        "from": "T21n1243_002:0212b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以塗香燒香及眾妙花。",
        "from": "T21n1243_002:0212b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種幢幡等而作供養。",
        "from": "T21n1243_002:0212b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即獲廣大無量無邊福德藏故。",
        "from": "T21n1243_002:0212b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸障難。",
        "from": "T21n1243_002:0212b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受持讀誦解說此經之地。",
        "from": "T21n1243_002:0212b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸天龍阿脩羅乾闥婆等。",
        "from": "T21n1243_002:0212b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切人天常以守護供養一切魔王不敢違越。",
        "from": "T21n1243_002:0212b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大力明王心若常憶念。",
        "from": "T21n1243_002:0212b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得八千菩薩及諸如來。",
        "from": "T21n1243_002:0212b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大神仙天人龍王。",
        "from": "T21n1243_002:0212b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿脩羅乾闥婆等稱揚讚歎。",
        "from": "T21n1243_002:0212b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時釋迦牟尼如來。",
        "from": "T21n1243_002:0212b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復告金剛手言。",
        "from": "T21n1243_002:0212b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有輕慢生高舉心者。",
        "from": "T21n1243_002:0212b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮八大地獄。",
        "from": "T21n1243_002:0212b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手若有受持讀誦。",
        "from": "T21n1243_002:0212b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他解說供養恭敬尊重讚歎。",
        "from": "T21n1243_002:0212b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得無量無邊伏藏故若聞一字一句。",
        "from": "T21n1243_002:0212b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得究竟不退菩薩道。",
        "from": "T21n1243_002:0212b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時金剛手言。",
        "from": "T21n1243_002:0212b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來之法極大甚深微妙難測。",
        "from": "T21n1243_002:0212b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可量不可思不可。",
        "from": "T21n1243_002:0212b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "議時諸眾生心自迷惑而不能了。",
        "from": "T21n1243_002:0212b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言金剛手此經為一切眾生說。",
        "from": "T21n1243_002:0212b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為勸誘一切眾生故。",
        "from": "T21n1243_002:0212b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲安樂一切眾生故。",
        "from": "T21n1243_002:0212b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為增益一切眾生故。",
        "from": "T21n1243_002:0212b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生得灌頂故。",
        "from": "T21n1243_002:0212b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切眾生離諸貧窮。",
        "from": "T21n1243_002:0212b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅諸業障得大吉祥故。",
        "from": "T21n1243_002:0212b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生得阿耨多羅三藐三菩提故。",
        "from": "T21n1243_002:0212b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時八千菩薩聞是說已。",
        "from": "T21n1243_002:0212b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶佛三匝合掌恭敬。",
        "from": "T21n1243_002:0212b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚言善哉善哉釋迦牟尼如來善說此法。",
        "from": "T21n1243_002:0212b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸菩薩為釋迦牟尼如來名故。",
        "from": "T21n1243_002:0212b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是言。",
        "from": "T21n1243_002:0212b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是世尊此實善說。",
        "from": "T21n1243_002:0212b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告金剛手言。",
        "from": "T21n1243_002:0212b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密主我說此大力威德法門。",
        "from": "T21n1243_002:0212b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝諸魔王眷屬皆悉來集。",
        "from": "T21n1243_002:0212b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切障難更不復作。",
        "from": "T21n1243_002:0212b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所求皆得圓滿。",
        "from": "T21n1243_002:0212b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至阿耨多羅三藐三菩提。",
        "from": "T21n1243_002:0212b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復說此陀羅尼。",
        "from": "T21n1243_002:0212b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T21n1243_002:0212b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引囉怛曩二合怛囉二合夜引野曩莫入室戰二合拏嚩日囉二合引播引拏曳魔賀引藥叉細引曩引跋跢曳怛儞也二合他引唵引賀曩賀曩嚩日囉二合那賀那賀嚩日囉二合末他末他嚩日囉二合入嚩二合攞　八嚩二合攞　嚩日囉二合鉢囉二合入嚩二合攞　鉢囉二合入嚩二合攞　嚩日囉二合蘇嚕蘇嚕母嚕母嚕割𧯫割𪘨陟皆反惹曳引尾惹曳引阿𡁠帝引阿波囉引𡁠帝引摩引囉賽引𩕳野二合鉢囉二合摩㗚那二合寧引曳婆嚩二合賀引婆誐嚩引七可反曩引賀引嚩日囉二合播引抳入虞　醯野二合割地鉢底薩　㗚嚩二合尾垠曩二合上苦恨反尾曩引野迦引喃引怛　㗚惹二合怛　㗚惹二合滿馱滿馱尾特嚩二合娑曩迦囉阿悉馱引喃引悉弟迦囉迦囉悉馱引喃引阿尾曩引舍迦囉薩　㗚嚩二合沒馱󰂛地薩　怛嚩二合引喃引麼引尾舍迦囉薩　㗚味二合禰引嚩引曩引誐遏誐蹉摩賀引麼攞嚩日囉二合󱃥嚕二合引馱囉引惹鉢囉二合怕引微引曩麼麼稱名薩　㗚嚩二合薩　怛嚩二合引喃引佐洛　乞叉二合洛　乞叉二合娑嚩二合悉釘二合婆𢱍覩佛告金剛手菩薩摩訶薩。",
        "from": "T21n1243_002:0212c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魔王并諸眷屬。",
        "from": "T21n1243_002:0212c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此大力威德法時。",
        "from": "T21n1243_002:0212c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各心生恐怖悚慄慞惶。",
        "from": "T21n1243_002:0212c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是以此大力忿怒明王威德力故。",
        "from": "T21n1243_002:0212c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常用護持一切眾生。",
        "from": "T21n1243_002:0212c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作大安樂息諸災難。",
        "from": "T21n1243_002:0212c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憐愍饒益毀諸惡毒破壞蠱魅。",
        "from": "T21n1243_002:0212c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為發大乘心者演說妙法者。",
        "from": "T21n1243_002:0212c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛法僧令得久住。",
        "from": "T21n1243_002:0212c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時文殊師利法王子從座而起。",
        "from": "T21n1243_002:0212c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩右膝著地。",
        "from": "T21n1243_002:0212c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛白佛言。",
        "from": "T21n1243_002:0212c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何佛說一切緣行為無常相。",
        "from": "T21n1243_002:0213a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告文殊師利。",
        "from": "T21n1243_002:0213a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1243_002:0213a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切緣行如乾闥婆城無有實相。",
        "from": "T21n1243_002:0213a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如電光如浮雲。",
        "from": "T21n1243_002:0213a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如霧如舍宅。",
        "from": "T21n1243_002:0213a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風中燭水上漚。",
        "from": "T21n1243_002:0213a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "芭蕉心如。",
        "from": "T21n1243_002:0213a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸畫相如。",
        "from": "T21n1243_002:0213a03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空中花如。",
        "from": "T21n1243_002:0213a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢幻影響如。",
        "from": "T21n1243_002:0213a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦樂輪迴如一切瀑河如一切海波如是如是。",
        "from": "T21n1243_002:0213a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一切眾生從緣所生。",
        "from": "T21n1243_002:0213a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不能知不能見。",
        "from": "T21n1243_002:0213a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能思惟不能解了。",
        "from": "T21n1243_002:0213a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛能知。",
        "from": "T21n1243_002:0213a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是見如是思惟如是解了。",
        "from": "T21n1243_002:0213a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故一切緣行即空相故即真實空故畢竟空故即三空故空空。",
        "from": "T21n1243_002:0213a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應如是解。",
        "from": "T21n1243_002:0213a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故即大空故即如來空故。",
        "from": "T21n1243_002:0213a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是知。",
        "from": "T21n1243_002:0213a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是見如是思惟如是解了。",
        "from": "T21n1243_002:0213a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩得如是相故。",
        "from": "T21n1243_002:0213a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛復告文殊師利法王子言。",
        "from": "T21n1243_002:0213a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩摩訶薩。",
        "from": "T21n1243_002:0213a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行檀波羅蜜多羼提波羅蜜多精進波羅蜜多禪波羅蜜多般若波羅蜜多。",
        "from": "T21n1243_002:0213a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應如是相而解了故。",
        "from": "T21n1243_002:0213a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀自在菩薩摩訶薩白佛言。",
        "from": "T21n1243_002:0213a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何此經名出生如來相。",
        "from": "T21n1243_002:0213a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語觀自在。",
        "from": "T21n1243_002:0213a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經若如來滅後廣作佛事。",
        "from": "T21n1243_002:0213a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故此經名生如來相。",
        "from": "T21n1243_002:0213a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若此經滅後佛法隨滅名生如來相。",
        "from": "T21n1243_002:0213a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經若住佛法亦住是故名生如來相。",
        "from": "T21n1243_002:0213a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故此經一切菩薩恒時奉事禮敬故。",
        "from": "T21n1243_002:0213a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是義故名生如來相。",
        "from": "T21n1243_002:0213a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時觀自在菩薩摩訶薩。",
        "from": "T21n1243_002:0213a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白佛言世尊。",
        "from": "T21n1243_002:0213a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經若有受持讀誦為他解說。",
        "from": "T21n1243_002:0213a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我即為彼而來護持。",
        "from": "T21n1243_002:0213a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言此經威德。",
        "from": "T21n1243_002:0213a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令一切菩薩摩訶薩及諸天人皆悉來集。",
        "from": "T21n1243_002:0213a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸菩薩同時讚言。",
        "from": "T21n1243_002:0213a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉世尊。",
        "from": "T21n1243_002:0213a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等樂聞當為說之。",
        "from": "T21n1243_002:0213a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言此金剛手大力祕密心。",
        "from": "T21n1243_002:0213a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能施一切眾生安樂故。",
        "from": "T21n1243_002:0213a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛祕密主。",
        "from": "T21n1243_002:0213a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T21n1243_002:0213a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經云何名最初法界相。",
        "from": "T21n1243_002:0213a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善男子諦聽。",
        "from": "T21n1243_002:0213a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經一切如來出生已。",
        "from": "T21n1243_002:0213b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經三十二日。",
        "from": "T21n1243_002:0213b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐大目真隣陀山。",
        "from": "T21n1243_002:0213b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入大力三摩地說之故。",
        "from": "T21n1243_002:0213b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名最初法界相。",
        "from": "T21n1243_002:0213b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經一切眾生初發心即住菩提道故。",
        "from": "T21n1243_002:0213b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名最初法界相。",
        "from": "T21n1243_002:0213b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經威德能令無量無邊菩薩摩訶薩。",
        "from": "T21n1243_002:0213b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一切現前三摩地。",
        "from": "T21n1243_002:0213b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名最初法界相。",
        "from": "T21n1243_002:0213b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此經威德能令無量無邊眾生得聲聞道故。",
        "from": "T21n1243_002:0213b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名最初法界相。",
        "from": "T21n1243_002:0213b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手若有受持讀誦為他解說一切如來皆如一子。",
        "from": "T21n1243_002:0213b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離輪迴命終之後至涅槃道故。",
        "from": "T21n1243_002:0213b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T21n1243_002:0213b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛大悲心常救度一切眾生令離輪迴脫諸苦難。",
        "from": "T21n1243_002:0213b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常說牟尼大智慧法滌盪眾生煩惱穢種。",
        "from": "T21n1243_002:0213b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉善哉祕密主。",
        "from": "T21n1243_002:0213b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有受持讀誦。",
        "from": "T21n1243_002:0213b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他解說供養恭敬。",
        "from": "T21n1243_002:0213b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自書若使人書。",
        "from": "T21n1243_002:0213b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀思惟常時憶念。",
        "from": "T21n1243_002:0213b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人即得俱胝三摩地。",
        "from": "T21n1243_002:0213b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復見俱胝如來并諸菩薩一切眷屬。",
        "from": "T21n1243_002:0213b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以廣大供養尊重恭敬。",
        "from": "T21n1243_002:0213b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣服臥具飲食湯藥。",
        "from": "T21n1243_002:0213b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所須皆悉奉施得大安樂。",
        "from": "T21n1243_002:0213b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子所種善根。",
        "from": "T21n1243_002:0213b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得阿耨多羅三藐三菩提故。",
        "from": "T21n1243_002:0213b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是得聞彼諸如來應正等覺所說妙法憶持不忘。",
        "from": "T21n1243_002:0213b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得金剛手菩薩威德力故。",
        "from": "T21n1243_002:0213b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大力威德忿怒王。",
        "from": "T21n1243_002:0213b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以護持成就安樂一切眾生。",
        "from": "T21n1243_002:0213b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是經已。",
        "from": "T21n1243_002:0213b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方來會金剛手菩薩觀自在菩薩文殊師利金剛藏等。",
        "from": "T21n1243_002:0213b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切悲智菩薩摩訶薩。",
        "from": "T21n1243_002:0213b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者須菩提諸大聲聞及諸眾生。",
        "from": "T21n1243_002:0213b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間天人龍王。",
        "from": "T21n1243_002:0213b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿脩羅乾闥婆等。",
        "from": "T21n1243_002:0213b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說歡喜而退。",
        "from": "T21n1243_002:0213b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說出生一切如來法眼遍照大力明王經卷下大力明王心真言怛　儞也二合他引　唵　引嚩日囉二合󱃥嚕二合馱摩賀引麼攞賀曩那賀鉢左末他尾枳囉尾特嚩二合娑野惹徵攞耄引那羅塢麁澁麼二合󱃥嚕二合馱吽引𠷑吒遏阿引去鴦鳥剛反惡入𤚥引醯引　娑嚩二合賀引",
        "from": "T21n1243_002:0213c04_100",
        "context_with_next_sentence": false
    }
]