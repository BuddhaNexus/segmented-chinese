[
    {
        "source_sentence": "佛說目連所問經",
        "from": "T24n1468_001:0911b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T24n1468_001:0911b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教大師臣法天奉　詔譯",
        "from": "T24n1468_001:0911b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞：",
        "from": "T24n1468_001:0911b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在王舍城竹林精舍。",
        "from": "T24n1468_001:0911b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時尊者大目犍連，於夜後分從自住處往詣佛所。",
        "from": "T24n1468_001:0911b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到已，投地頂禮佛足，於一面坐。",
        "from": "T24n1468_001:0911b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時尊者大目犍連即從坐起，白佛言：",
        "from": "T24n1468_001:0911b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T24n1468_001:0911b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，行非法行。",
        "from": "T24n1468_001:0911b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊！",
        "from": "T24n1468_001:0911b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等云何而得其福？",
        "from": "T24n1468_001:0911b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊告言尊者大目犍連：",
        "from": "T24n1468_001:0911b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，行非法行。",
        "from": "T24n1468_001:0911b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人命終生地獄中，壽等四大王天五百年，計人間歲數九百萬歲。",
        "from": "T24n1468_001:0911b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」尊者大目犍連復白佛言：",
        "from": "T24n1468_001:0911b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T24n1468_001:0911b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，不依說法。",
        "from": "T24n1468_001:0911b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等云何而得其福？",
        "from": "T24n1468_001:0911b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊告言尊者大目犍連：",
        "from": "T24n1468_001:0911b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，若不依說法。",
        "from": "T24n1468_001:0911b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人命終生地獄中，壽等忉利天一千歲，計人間算數三俱胝六百萬歲。",
        "from": "T24n1468_001:0911c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」尊者大目犍連白佛言：",
        "from": "T24n1468_001:0911c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T24n1468_001:0911c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，行波逸提法。",
        "from": "T24n1468_001:0911c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等云何而得其福？",
        "from": "T24n1468_001:0911c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊告言尊者大目犍連：",
        "from": "T24n1468_001:0911c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，行波逸提法。",
        "from": "T24n1468_001:0911c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人命終生地獄中，壽等夜摩天二千歲，計人間算數一十四俱胝四百萬歲。",
        "from": "T24n1468_001:0911c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」尊者大目犍連白佛言：",
        "from": "T24n1468_001:0911c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T24n1468_001:0911c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，犯吐羅鉢底法。",
        "from": "T24n1468_001:0911c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等云何得多福利？",
        "from": "T24n1468_001:0911c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊告言尊者大目犍連：",
        "from": "T24n1468_001:0911c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，犯吐羅鉢底法。",
        "from": "T24n1468_001:0911c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人命終生地獄中，壽命兜率陀天四千歲，計人間算數五十七俱胝六萬歲。",
        "from": "T24n1468_001:0911c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」尊者大目犍連白佛言：",
        "from": "T24n1468_001:0911c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T24n1468_001:0911c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，犯僧伽婆尸沙法。",
        "from": "T24n1468_001:0911c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等云何得多福利？",
        "from": "T24n1468_001:0911c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊告言尊者大目犍連：",
        "from": "T24n1468_001:0911c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，犯僧伽婆尸沙法。",
        "from": "T24n1468_001:0911c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人命終生地獄中，壽等化樂天八千歲，計人間算數二百三十俱胝四百萬歲。",
        "from": "T24n1468_001:0911c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」尊者大目犍連白佛言：",
        "from": "T24n1468_001:0911c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T24n1468_001:0911c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，犯波羅夷法。",
        "from": "T24n1468_001:0911c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等云何得多福利？",
        "from": "T24n1468_001:0911c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊告言尊者大目犍連：",
        "from": "T24n1468_001:0911c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有苾芻、苾芻尼，迷醉犯戒，無慚無愧，輕慢律儀，犯波羅夷法。",
        "from": "T24n1468_001:0911c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人命終生地獄中，壽等他化自在天一萬六千歲，計人間算數九百一十五俱胝六百萬歲。",
        "from": "T24n1468_001:0912a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」尊者大目犍連聞佛說已，心大歡喜，作禮而去。",
        "from": "T24n1468_001:0912a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說目連所問經",
        "from": "T24n1468_001:0912a03_100",
        "context_with_next_sentence": false
    }
]