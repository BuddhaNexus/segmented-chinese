{
    "X79n1560_014:0519c03_0": "禪林僧寶傳卷第十四",
    "X79n1560_014:0519c05_0": "宋明白庵居沙門　惠洪　撰",
    "X79n1560_014:0519c06_0": "神鼎諲禪師",
    "X79n1560_014:0519c07_0": "禪師洪諲者。",
    "X79n1560_014:0519c07_1": "襄水人也。",
    "X79n1560_014:0519c07_2": "傳失其氏(或云生於扈氏)。",
    "X79n1560_014:0519c07_3": "隱于衡嶽之三生藏。",
    "X79n1560_014:0519c08_4": "有湘陰男子。",
    "X79n1560_014:0519c08_5": "邦稱右族。",
    "X79n1560_014:0519c08_6": "來游福嚴。",
    "X79n1560_014:0519c08_7": "即諲室。",
    "X79n1560_014:0519c09_0": "見諲氣貌閑靖。",
    "X79n1560_014:0519c09_1": "一鉢掛壁。",
    "X79n1560_014:0519c09_2": "莫能親疎之。",
    "X79n1560_014:0519c09_3": "傾愛之忘去。",
    "X79n1560_014:0519c10_0": "謂曰。",
    "X79n1560_014:0519c10_1": "師寧甘長客于人。",
    "X79n1560_014:0519c10_2": "亦欲住山乎。",
    "X79n1560_014:0519c10_3": "我家神鼎之下。",
    "X79n1560_014:0519c11_0": "鄰寺吾世植福之地。",
    "X79n1560_014:0519c11_1": "久無住持者。",
    "X79n1560_014:0519c11_2": "可俱往。",
    "X79n1560_014:0519c11_3": "諲笑曰諾。",
    "X79n1560_014:0519c12_0": "乃以己馬馱諲還。",
    "X79n1560_014:0519c12_1": "諲至。",
    "X79n1560_014:0519c12_2": "設魚鼓粥飯。",
    "X79n1560_014:0519c12_3": "如諸方。",
    "X79n1560_014:0519c12_4": "一年而成叢席。",
    "X79n1560_014:0519c13_5": "十年而有眾三十輩。",
    "X79n1560_014:0519c13_6": "僧契嵩少時游焉。",
    "X79n1560_014:0519c13_7": "諲坐堂上。",
    "X79n1560_014:0519c14_8": "受其展。",
    "X79n1560_014:0519c14_9": "指庭下兩小甕。",
    "X79n1560_014:0519c14_10": "咤曰。",
    "X79n1560_014:0519c14_11": "汝來乃其時寺。",
    "X79n1560_014:0519c14_12": "今年始有醬食矣。",
    "X79n1560_014:0519c15_13": "明日將粥。",
    "X79n1560_014:0519c15_14": "一力挾筐。",
    "X79n1560_014:0519c15_15": "取物投僧鉢中。",
    "X79n1560_014:0519c16_0": "嵩睨上下。",
    "X79n1560_014:0519c16_1": "有即咀嚼者。",
    "X79n1560_014:0519c16_2": "有置之自若者。",
    "X79n1560_014:0519c16_3": "嵩袖之下堂出。",
    "X79n1560_014:0519c17_4": "以觀皆碎餅餌。",
    "X79n1560_014:0519c17_5": "問諸耆老。",
    "X79n1560_014:0519c17_6": "曰此寺自來不煑粥。",
    "X79n1560_014:0519c17_7": "脫有檀越請應供。",
    "X79n1560_014:0519c18_8": "諲次第撥僧赴之。",
    "X79n1560_014:0519c18_9": "祝令攜乾殘者。",
    "X79n1560_014:0519c18_10": "歸納庫下。",
    "X79n1560_014:0519c19_11": "碎焙之。",
    "X79n1560_014:0519c19_12": "均而分俵。",
    "X79n1560_014:0519c19_13": "以當麫也。",
    "X79n1560_014:0519c19_14": "堂頭言。",
    "X79n1560_014:0519c19_15": "汝來適丁其時。",
    "X79n1560_014:0519c20_16": "良然。",
    "X79n1560_014:0519c20_17": "嵩大驚。",
    "X79n1560_014:0519c20_18": "有木牀一。",
    "X79n1560_014:0519c20_19": "夜則諲坐其上。",
    "X79n1560_014:0519c20_20": "三十輩者環之。",
    "X79n1560_014:0519c21_21": "聽其誨語。",
    "X79n1560_014:0519c21_22": "諲曰。",
    "X79n1560_014:0519c21_23": "洞山頌曰。",
    "X79n1560_014:0519c21_24": "貪瞋癡。",
    "X79n1560_014:0519c21_25": "太無知。",
    "X79n1560_014:0519c22_0": "果賴今朝捉得伊。",
    "X79n1560_014:0519c22_1": "行即打。",
    "X79n1560_014:0519c22_2": "坐即槌。",
    "X79n1560_014:0519c22_3": "分付心王子細推。",
    "X79n1560_014:0519c23_0": "無量劫來不解脫。",
    "X79n1560_014:0519c23_1": "問汝三人知不知。",
    "X79n1560_014:0519c23_2": "古人與麼道。",
    "X79n1560_014:0519c23_3": "神鼎即不然。",
    "X79n1560_014:0519c24_4": "貪瞋痴。",
    "X79n1560_014:0519c24_5": "實無知。",
    "X79n1560_014:0519c24_6": "十二時中任從伊。",
    "X79n1560_014:0519c24_7": "行即往。",
    "X79n1560_014:0519c24_8": "坐即隨。",
    "X79n1560_014:0520a01_9": "分付心王無可為。",
    "X79n1560_014:0520a01_10": "無量劫來元解脫。",
    "X79n1560_014:0520a01_11": "何須更問知不知。",
    "X79n1560_014:0520a02_12": "又甞曰。",
    "X79n1560_014:0520a02_13": "無量劫來賃屋住。",
    "X79n1560_014:0520a02_14": "至今不識主人公。",
    "X79n1560_014:0520a03_0": "借問諸人還識主人公也未。",
    "X79n1560_014:0520a03_1": "良久云。",
    "X79n1560_014:0520a03_2": "若有人問神鼎。",
    "X79n1560_014:0520a04_0": "向伊道作麼作麼。",
    "X79n1560_014:0520a04_1": "又云。",
    "X79n1560_014:0520a04_2": "不得作主人公話會參。",
    "X79n1560_014:0520a04_3": "智度寺沙門本延。",
    "X79n1560_014:0520a05_4": "謁諲夜語。",
    "X79n1560_014:0520a05_5": "還謂郡將曰。",
    "X79n1560_014:0520a05_6": "諲公所謂。",
    "X79n1560_014:0520a05_7": "本色老宿。",
    "X79n1560_014:0520a06_8": "惜陸沈山中。",
    "X79n1560_014:0520a06_9": "郡以禮請開法。",
    "X79n1560_014:0520a06_10": "諲辭免不得已曰。",
    "X79n1560_014:0520a07_0": "山僧年十八游方。",
    "X79n1560_014:0520a07_1": "亦無正意參禪。",
    "X79n1560_014:0520a07_2": "只欲往東京。",
    "X79n1560_014:0520a07_3": "聽一兩本經論。",
    "X79n1560_014:0520a08_4": "以答平生。",
    "X79n1560_014:0520a08_5": "何期行到汝州。",
    "X79n1560_014:0520a08_6": "忽值風發吹上首山。",
    "X79n1560_014:0520a09_7": "見箇老和尚。",
    "X79n1560_014:0520a09_8": "劈頭槌一槌。",
    "X79n1560_014:0520a09_9": "當時浹背汗流。",
    "X79n1560_014:0520a09_10": "禮却三拜。",
    "X79n1560_014:0520a10_11": "如今思量。",
    "X79n1560_014:0520a10_12": "悔不當初。",
    "X79n1560_014:0520a10_13": "束縛送去首山後。",
    "X79n1560_014:0520a10_14": "却歸鄉井。",
    "X79n1560_014:0520a11_15": "古寺閑房。",
    "X79n1560_014:0520a11_16": "任運過時。",
    "X79n1560_014:0520a11_17": "豈不快哉。",
    "X79n1560_014:0520a11_18": "雖然如是。",
    "X79n1560_014:0520a11_19": "官不容鍼。",
    "X79n1560_014:0520a12_20": "私通車馬。",
    "X79n1560_014:0520a12_21": "今日有一炷香。",
    "X79n1560_014:0520a12_22": "也要對眾燒却。",
    "X79n1560_014:0520a12_23": "供養此老。",
    "X79n1560_014:0520a13_24": "只是汝州土宜。",
    "X79n1560_014:0520a13_25": "乃升座問答罷。",
    "X79n1560_014:0520a13_26": "又曰。",
    "X79n1560_014:0520a13_27": "齋會已具。",
    "X79n1560_014:0520a13_28": "僧俗已集。",
    "X79n1560_014:0520a14_29": "問答已畢。",
    "X79n1560_014:0520a14_30": "佛法成辦。",
    "X79n1560_014:0520a14_31": "只將此善。",
    "X79n1560_014:0520a14_32": "上祝　今上皇帝聖壽無疆。",
    "X79n1560_014:0520a15_33": "便下座。",
    "X79n1560_014:0520a15_34": "道俗懽呼。",
    "X79n1560_014:0520a15_35": "以為未始見也。",
    "X79n1560_014:0520a15_36": "於是諲聲名普聞。",
    "X79n1560_014:0520a16_37": "僧問。",
    "X79n1560_014:0520a16_38": "鳥窠侍者。",
    "X79n1560_014:0520a16_39": "欲往諸方。",
    "X79n1560_014:0520a16_40": "學習佛法去。",
    "X79n1560_014:0520a17_41": "鳥窠但吹布毛。",
    "X79n1560_014:0520a17_42": "便悟去。",
    "X79n1560_014:0520a17_43": "如何。",
    "X79n1560_014:0520a17_44": "諲曰。",
    "X79n1560_014:0520a17_45": "此事即知。",
    "X79n1560_014:0520a17_46": "此人久積淨業。",
    "X79n1560_014:0520a18_47": "曠劫修行。",
    "X79n1560_014:0520a18_48": "方能了解。",
    "X79n1560_014:0520a18_49": "乃拈布毛舉似。",
    "X79n1560_014:0520a18_50": "復吹之曰。",
    "X79n1560_014:0520a19_51": "會麼。",
    "X79n1560_014:0520a19_52": "不得辜負老僧。",
    "X79n1560_014:0520a19_53": "良久曰。",
    "X79n1560_014:0520a19_54": "我在首山。",
    "X79n1560_014:0520a19_55": "與汾陽師兄。",
    "X79n1560_014:0520a20_56": "曾如此說。",
    "X79n1560_014:0520a20_57": "汾陽作偈曰。",
    "X79n1560_014:0520a20_58": "侍者初心慕勝緣。",
    "X79n1560_014:0520a20_59": "辭師擬去學參禪。",
    "X79n1560_014:0520a21_60": "鳥窠知是根機熟。",
    "X79n1560_014:0520a21_61": "吹毛當下得心安。",
    "X79n1560_014:0520a21_62": "看他吐露。",
    "X79n1560_014:0520a22_63": "終是作家。",
    "X79n1560_014:0520a22_64": "又曾同作拄杖子偈。",
    "X79n1560_014:0520a22_65": "昭曰。",
    "X79n1560_014:0520a22_66": "一條拄杖刺蝎。",
    "X79n1560_014:0520a23_67": "勁直螺紋爆節。",
    "X79n1560_014:0520a23_68": "尋常肩上橫擔。",
    "X79n1560_014:0520a23_69": "大地乾坤挑斡。",
    "X79n1560_014:0520a24_70": "[翟*支]開懵鈍頑痴。",
    "X79n1560_014:0520a24_71": "打破刢俐尖黠。",
    "X79n1560_014:0520a24_72": "如今卓在面前。",
    "X79n1560_014:0520a24_73": "諸方作麼拈掇。",
    "X79n1560_014:0520b01_74": "我即不與麼道。",
    "X79n1560_014:0520b01_75": "僧曰。",
    "X79n1560_014:0520b01_76": "願聞和尚偈。",
    "X79n1560_014:0520b01_77": "偈曰。",
    "X79n1560_014:0520b02_0": "得處不在高峯。",
    "X79n1560_014:0520b02_1": "亦非淺谿深壑。",
    "X79n1560_014:0520b02_2": "如今幸得扶持。",
    "X79n1560_014:0520b02_3": "老病是為依托。",
    "X79n1560_014:0520b03_4": "僧問。",
    "X79n1560_014:0520b03_5": "有問首山。",
    "X79n1560_014:0520b03_6": "如何是佛法大意。",
    "X79n1560_014:0520b03_7": "答曰。",
    "X79n1560_014:0520b03_8": "我不將小意對闍梨。",
    "X79n1560_014:0520b04_9": "諲曰。",
    "X79n1560_014:0520b04_10": "若有問神鼎。",
    "X79n1560_014:0520b04_11": "但向道。",
    "X79n1560_014:0520b04_12": "此一問豈是小意。",
    "X79n1560_014:0520b05_13": "會麼。",
    "X79n1560_014:0520b05_14": "首山大似擔水河頭賣。",
    "X79n1560_014:0520b05_15": "神鼎只解就窩裏打。",
    "X79n1560_014:0520b06_16": "良久曰。",
    "X79n1560_014:0520b06_17": "相見不揚眉。",
    "X79n1560_014:0520b06_18": "君東我亦西。",
    "X79n1560_014:0520b06_19": "有時示眾曰。",
    "X79n1560_014:0520b07_20": "雨下階頭濕。",
    "X79n1560_014:0520b07_21": "晴乾又沒泥。",
    "X79n1560_014:0520b07_22": "姨姨娘姊妹。",
    "X79n1560_014:0520b07_23": "嫂嫂阿哥妻。",
    "X79n1560_014:0520b08_24": "若與麼會得。",
    "X79n1560_014:0520b08_25": "猶是長連牀上粥飯僧。",
    "X79n1560_014:0520b08_26": "作麼生道得一句。",
    "X79n1560_014:0520b09_27": "作箇出格道人。",
    "X79n1560_014:0520b09_28": "有麼。",
    "X79n1560_014:0520b09_29": "良久云。",
    "X79n1560_014:0520b09_30": "適來有一人。",
    "X79n1560_014:0520b09_31": "為蛇畫足。",
    "X79n1560_014:0520b10_32": "踣跳上梵天。",
    "X79n1560_014:0520b10_33": "[祝/土]著帝釋鼻孔。",
    "X79n1560_014:0520b10_34": "帝釋惡發。",
    "X79n1560_014:0520b10_35": "雨似盆傾。",
    "X79n1560_014:0520b11_36": "諸人還覺袈裟濕麼。",
    "X79n1560_014:0520b11_37": "有僧自汾州來(傳是舉道者)。",
    "X79n1560_014:0520b11_38": "諲倚拄杖曰。",
    "X79n1560_014:0520b12_39": "一朵峯巒上。",
    "X79n1560_014:0520b12_40": "獨樹不成林時如何。",
    "X79n1560_014:0520b12_41": "僧曰。",
    "X79n1560_014:0520b12_42": "水分江樹淺。",
    "X79n1560_014:0520b13_43": "遠澗碧泉深。",
    "X79n1560_014:0520b13_44": "又問。",
    "X79n1560_014:0520b13_45": "作麼生是回互之機。",
    "X79n1560_014:0520b13_46": "僧曰。",
    "X79n1560_014:0520b14_0": "盲人無眼。",
    "X79n1560_014:0520b14_1": "又問曰。",
    "X79n1560_014:0520b14_2": "我在眾時。",
    "X79n1560_014:0520b14_3": "不會汾陽一偈。",
    "X79n1560_014:0520b14_4": "上座久在法席。",
    "X79n1560_014:0520b15_5": "必然明了。",
    "X79n1560_014:0520b15_6": "僧曰。",
    "X79n1560_014:0520b15_7": "請和尚舉看。",
    "X79n1560_014:0520b15_8": "諲曰。",
    "X79n1560_014:0520b15_9": "鵝王飛鳥去。",
    "X79n1560_014:0520b16_10": "馬頭嶺上住。",
    "X79n1560_014:0520b16_11": "天高葢不得。",
    "X79n1560_014:0520b16_12": "大家總上路作麼。",
    "X79n1560_014:0520b16_13": "僧舉起坐具曰。",
    "X79n1560_014:0520b17_14": "萬年松在祝融峯。",
    "X79n1560_014:0520b17_15": "諲曰。",
    "X79n1560_014:0520b17_16": "不要上座答話。",
    "X79n1560_014:0520b17_17": "試說看。",
    "X79n1560_014:0520b18_18": "僧曰。",
    "X79n1560_014:0520b18_19": "忽憶少年曾覽照。",
    "X79n1560_014:0520b18_20": "十分光彩臉邊紅。",
    "X79n1560_014:0520b18_21": "即拂衣去。",
    "X79n1560_014:0520b19_22": "諲曰。",
    "X79n1560_014:0520b19_23": "弄巧成拙。",
    "X79n1560_014:0520b19_24": "僧請益首山答佛話。",
    "X79n1560_014:0520b19_25": "諲作偈曰。",
    "X79n1560_014:0520b20_0": "新婦騎驢阿家牽。",
    "X79n1560_014:0520b20_1": "誰後復誰先。",
    "X79n1560_014:0520b20_2": "張三與李四。",
    "X79n1560_014:0520b20_3": "拱手賀堯年。",
    "X79n1560_014:0520b21_4": "從上諸聖。",
    "X79n1560_014:0520b21_5": "總皆然。",
    "X79n1560_014:0520b21_6": "起坐忪[怡-台+諸]沒兩般。",
    "X79n1560_014:0520b21_7": "有問又須向伊道。",
    "X79n1560_014:0520b22_8": "新婦騎驢阿家牽。",
    "X79n1560_014:0520b22_9": "乃又曰。",
    "X79n1560_014:0520b22_10": "雖然如此。",
    "X79n1560_014:0520b22_11": "猶未盡首山大意。",
    "X79n1560_014:0520b23_12": "進曰。",
    "X79n1560_014:0520b23_13": "如何盡首山大意。",
    "X79n1560_014:0520b23_14": "諲曰。",
    "X79n1560_014:0520b23_15": "天長地久。",
    "X79n1560_014:0520b23_16": "日月齊明。",
    "X79n1560_014:0520b24_17": "又作偈曰。",
    "X79n1560_014:0520b24_18": "長安甚樂到人稀(千聖同源)。",
    "X79n1560_014:0520b24_19": "到者方知不是歸(方可較些子)。",
    "X79n1560_014:0520c01_20": "直道逈超凡聖外(有人不肯在)。",
    "X79n1560_014:0520c01_21": "猶是曹谿第二機(青霄有路)。",
    "X79n1560_014:0520c02_22": "郴州道俗。",
    "X79n1560_014:0520c02_23": "即山迎請。",
    "X79n1560_014:0520c02_24": "住王莽山。",
    "X79n1560_014:0520c02_25": "不赴。",
    "X79n1560_014:0520c02_26": "僧問。",
    "X79n1560_014:0520c03_27": "佛不違眾生之願。",
    "X79n1560_014:0520c03_28": "為甚有請不赴。",
    "X79n1560_014:0520c03_29": "諲曰。",
    "X79n1560_014:0520c03_30": "莫錯怪老僧好。",
    "X79n1560_014:0520c04_31": "有偈曰。",
    "X79n1560_014:0520c04_32": "一月普現一切水。",
    "X79n1560_014:0520c04_33": "一切水月一月攝。",
    "X79n1560_014:0520c04_34": "若人解了如斯意。",
    "X79n1560_014:0520c05_35": "大地眾生無不徹。",
    "X79n1560_014:0520c05_36": "諲德臘俱高。",
    "X79n1560_014:0520c05_37": "叢林尊仰之。",
    "X79n1560_014:0520c06_38": "如古趙州。",
    "X79n1560_014:0520c06_39": "同曰神鼎。",
    "X79n1560_014:0520c06_40": "閑書壁作偈曰。",
    "X79n1560_014:0520c06_41": "壽報七十六。",
    "X79n1560_014:0520c07_42": "千足與萬足。",
    "X79n1560_014:0520c07_43": "若問西來意。",
    "X79n1560_014:0520c07_44": "彼此莫相觸。",
    "X79n1560_014:0520c07_45": "何付囑。",
    "X79n1560_014:0520c08_0": "報你張三李四叔。",
    "X79n1560_014:0520c08_1": "山又青水又綠。",
    "X79n1560_014:0520c08_2": "歿時年八十餘。",
    "X79n1560_014:0520c08_3": "諲少年時。",
    "X79n1560_014:0520c09_4": "與耆宿數人。",
    "X79n1560_014:0520c09_5": "游湘中。",
    "X79n1560_014:0520c09_6": "一僧舉論宗乘。",
    "X79n1560_014:0520c09_7": "頗博敏。",
    "X79n1560_014:0520c10_0": "會野飯山店供辦。",
    "X79n1560_014:0520c10_1": "而僧論說不已。",
    "X79n1560_014:0520c10_2": "諲曰。",
    "X79n1560_014:0520c10_3": "上人言三界惟心萬法惟識。",
    "X79n1560_014:0520c11_4": "惟識惟心。",
    "X79n1560_014:0520c11_5": "眼聲耳色。",
    "X79n1560_014:0520c11_6": "何人之語。",
    "X79n1560_014:0520c11_7": "僧曰。",
    "X79n1560_014:0520c12_0": "法眼大師偈也。",
    "X79n1560_014:0520c12_1": "諲曰。",
    "X79n1560_014:0520c12_2": "其義如何。",
    "X79n1560_014:0520c12_3": "對曰。",
    "X79n1560_014:0520c12_4": "惟心故根境不相到。",
    "X79n1560_014:0520c13_5": "惟識故聲色摐然。",
    "X79n1560_014:0520c13_6": "諲曰。",
    "X79n1560_014:0520c13_7": "舌味是根境否。",
    "X79n1560_014:0520c13_8": "對曰是。",
    "X79n1560_014:0520c14_0": "諲以箸挾菜置口中。",
    "X79n1560_014:0520c14_1": "含胡而言。",
    "X79n1560_014:0520c14_2": "曰何謂相入耶。",
    "X79n1560_014:0520c14_3": "坐者相顧大驚。",
    "X79n1560_014:0520c15_4": "莫能加答。",
    "X79n1560_014:0520c15_5": "諲曰。",
    "X79n1560_014:0520c15_6": "路塗之樂。",
    "X79n1560_014:0520c15_7": "終未到家。",
    "X79n1560_014:0520c15_8": "見解入微。",
    "X79n1560_014:0520c16_9": "不名見道。",
    "X79n1560_014:0520c16_10": "參須實參。",
    "X79n1560_014:0520c16_11": "悟須實悟。",
    "X79n1560_014:0520c16_12": "閻羅大王。",
    "X79n1560_014:0520c16_13": "不怕多語。",
    "X79n1560_014:0520c18_0": "贊曰。",
    "X79n1560_014:0520c18_1": "不欲爭虗氣於形迹之間。",
    "X79n1560_014:0520c18_2": "唯務収實効於言意之表者。",
    "X79n1560_014:0520c19_3": "憃叟論也。",
    "X79n1560_014:0520c19_4": "予觀神鼎。",
    "X79n1560_014:0520c19_5": "殆庶幾。",
    "X79n1560_014:0520c19_6": "無媿此言。",
    "X79n1560_014:0520c19_7": "得道時未壯。",
    "X79n1560_014:0520c20_8": "隱于南嶽二十年。",
    "X79n1560_014:0520c20_9": "乃領住持事。",
    "X79n1560_014:0520c20_10": "又二十年。",
    "X79n1560_014:0520c20_11": "方開堂說法。",
    "X79n1560_014:0520c21_12": "然皆緣起於他。",
    "X79n1560_014:0520c21_13": "寔非己意。",
    "X79n1560_014:0520c21_14": "譬如夜月行空。",
    "X79n1560_014:0520c22_0": "任運而去至。",
    "X79n1560_014:0520c22_1": "於甘枯淡。",
    "X79n1560_014:0520c22_2": "以遂夙志。",
    "X79n1560_014:0520c22_3": "依林樾以終天年。",
    "X79n1560_014:0520c23_0": "可以追嫓其師也。",
    "X79n1560_014:0520c24_0": "谷山崇禪師",
    "X79n1560_014:0521a01_0": "禪師名行崇。",
    "X79n1560_014:0521a01_1": "不知何許人也。",
    "X79n1560_014:0521a01_2": "初住福州報恩寺。",
    "X79n1560_014:0521a01_3": "後住潭州谷山寺。",
    "X79n1560_014:0521a02_4": "嗣保福展禪師。",
    "X79n1560_014:0521a02_5": "雪峯之的孫也。",
    "X79n1560_014:0521a02_6": "崇謂門弟子曰。",
    "X79n1560_014:0521a03_7": "吾雖不在。",
    "X79n1560_014:0521a03_8": "未甞不為諸兄弟。",
    "X79n1560_014:0521a03_9": "若委悉報恩甞為人處。",
    "X79n1560_014:0521a04_10": "許汝出意想知解。",
    "X79n1560_014:0521a04_11": "五陰身田。",
    "X79n1560_014:0521a04_12": "若委不得。",
    "X79n1560_014:0521a04_13": "猶待報恩。",
    "X79n1560_014:0521a05_14": "開兩片皮。",
    "X79n1560_014:0521a05_15": "方是為人。",
    "X79n1560_014:0521a05_16": "保汝未出得意想知解。",
    "X79n1560_014:0521a05_17": "所以古人喚作鬼家活計。",
    "X79n1560_014:0521a06_18": "蝦蟆衣下客。",
    "X79n1560_014:0521a06_19": "欲得速疾相應。",
    "X79n1560_014:0521a07_0": "即如今立地。",
    "X79n1560_014:0521a07_1": "便證。",
    "X79n1560_014:0521a07_2": "驗取識取。",
    "X79n1560_014:0521a07_3": "有什麼罪過。",
    "X79n1560_014:0521a07_4": "不然。",
    "X79n1560_014:0521a07_5": "根思遲回。",
    "X79n1560_014:0521a08_6": "且以日及夜。",
    "X79n1560_014:0521a08_7": "究尋將去。",
    "X79n1560_014:0521a08_8": "忽然一日覰見。",
    "X79n1560_014:0521a08_9": "更莫以少為足。",
    "X79n1560_014:0521a09_10": "更能研窮究竟。",
    "X79n1560_014:0521a09_11": "乃至婬坊酒肆。",
    "X79n1560_014:0521a09_12": "若觸若淨。",
    "X79n1560_014:0521a09_13": "若好若惡。",
    "X79n1560_014:0521a10_14": "以汝所見事覰教。",
    "X79n1560_014:0521a10_15": "盡是此境界。",
    "X79n1560_014:0521a10_16": "入如入律。",
    "X79n1560_014:0521a10_17": "若更見一法。",
    "X79n1560_014:0521a11_18": "如絲髮許。",
    "X79n1560_014:0521a11_19": "不見此箇事。",
    "X79n1560_014:0521a11_20": "我說為無明翳障。",
    "X79n1560_014:0521a12_0": "直須不見有法。",
    "X79n1560_014:0521a12_1": "是別底法。",
    "X79n1560_014:0521a12_2": "方得圓備。",
    "X79n1560_014:0521a12_3": "到遮裏。",
    "X79n1560_014:0521a12_4": "更能翻擲自由。",
    "X79n1560_014:0521a13_5": "開合不成痕縫。",
    "X79n1560_014:0521a13_6": "如水入水。",
    "X79n1560_014:0521a13_7": "如火入火。",
    "X79n1560_014:0521a13_8": "如風入風。",
    "X79n1560_014:0521a14_9": "如空入空。",
    "X79n1560_014:0521a14_10": "若能如是。",
    "X79n1560_014:0521a14_11": "直下提一口劒。",
    "X79n1560_014:0521a14_12": "刺斷天下人疑網。",
    "X79n1560_014:0521a15_13": "一如不作相似。",
    "X79n1560_014:0521a15_14": "所以古人道。",
    "X79n1560_014:0521a15_15": "繁興大用。",
    "X79n1560_014:0521a15_16": "舉必全真。",
    "X79n1560_014:0521a16_17": "若有箇漢。",
    "X79n1560_014:0521a16_18": "到與麼境界。",
    "X79n1560_014:0521a16_19": "誰敢向前說是說非。",
    "X79n1560_014:0521a16_20": "何以故。",
    "X79n1560_014:0521a17_21": "此人是箇漢。",
    "X79n1560_014:0521a17_22": "超諸限量。",
    "X79n1560_014:0521a17_23": "透出因果。",
    "X79n1560_014:0521a17_24": "一切處管束此人不得。",
    "X79n1560_014:0521a18_25": "兄弟若能如是。",
    "X79n1560_014:0521a18_26": "即可。",
    "X79n1560_014:0521a18_27": "若未得如此。",
    "X79n1560_014:0521a18_28": "且直須好與。",
    "X79n1560_014:0521a19_29": "莫取次發言吐氣。",
    "X79n1560_014:0521a19_30": "沉墜却汝無量劫。",
    "X79n1560_014:0521a19_31": "莫到與麼時。",
    "X79n1560_014:0521a20_0": "便道報恩不道。",
    "X79n1560_014:0521a21_0": "贊曰。",
    "X79n1560_014:0521a21_1": "洞山清稟禪師。",
    "X79n1560_014:0521a21_2": "作澄心堂錄。",
    "X79n1560_014:0521a21_3": "錄崇語句。",
    "X79n1560_014:0521a21_4": "細味之。",
    "X79n1560_014:0521a22_0": "骨氣不減巖頭。",
    "X79n1560_014:0521a22_1": "恨不能多見。",
    "X79n1560_014:0521a22_2": "崇寧之初。",
    "X79n1560_014:0521a22_3": "衝虎至谷山。",
    "X79n1560_014:0521a23_0": "塔塚莫辨。",
    "X79n1560_014:0521a23_1": "事迹零落。",
    "X79n1560_014:0521a23_2": "不可考究。",
    "X79n1560_014:0521a23_3": "坐而太息。",
    "X79n1560_014:0521a23_4": "作偈曰。",
    "X79n1560_014:0521a23_5": "行盡湘西十里松。",
    "X79n1560_014:0521a24_6": "到門却立數諸峯。",
    "X79n1560_014:0521a24_7": "崇公事迹無尋處。",
    "X79n1560_014:0521b01_0": "庭下春泥見虎蹤。",
    "X79n1560_014:0521b02_0": "慧林圓照本禪師",
    "X79n1560_014:0521b03_0": "圓照禪師。",
    "X79n1560_014:0521b03_1": "諱宗本。",
    "X79n1560_014:0521b03_2": "出於管氏。",
    "X79n1560_014:0521b03_3": "常州無錫人也。",
    "X79n1560_014:0521b03_4": "性質直。",
    "X79n1560_014:0521b04_0": "少緣飾。",
    "X79n1560_014:0521b04_1": "貌豐碩。",
    "X79n1560_014:0521b04_2": "言無枝葉。",
    "X79n1560_014:0521b04_3": "年十九。",
    "X79n1560_014:0521b04_4": "師事蘇州承天永安道昇。",
    "X79n1560_014:0521b05_5": "方道價重。",
    "X79n1560_014:0521b05_6": "叢林歸之者如雲。",
    "X79n1560_014:0521b05_7": "本弊衣垢面。",
    "X79n1560_014:0521b05_8": "操井臼。",
    "X79n1560_014:0521b06_9": "典炊爨。",
    "X79n1560_014:0521b06_10": "以供給之。",
    "X79n1560_014:0521b06_11": "夜則入室參道。",
    "X79n1560_014:0521b06_12": "昇曰。",
    "X79n1560_014:0521b06_13": "頭陀荷眾良苦。",
    "X79n1560_014:0521b07_14": "亦疲勞乎。",
    "X79n1560_014:0521b07_15": "對曰。",
    "X79n1560_014:0521b07_16": "若捨一法。",
    "X79n1560_014:0521b07_17": "不名滿足菩提。",
    "X79n1560_014:0521b07_18": "實欲此生身證。",
    "X79n1560_014:0521b08_19": "其敢言勞。",
    "X79n1560_014:0521b08_20": "昇陰奇之。",
    "X79n1560_014:0521b08_21": "又十年。",
    "X79n1560_014:0521b08_22": "剃髮受具。",
    "X79n1560_014:0521b09_0": "服勤三年。",
    "X79n1560_014:0521b09_1": "乃辭昇。",
    "X79n1560_014:0521b09_2": "游方徧參。",
    "X79n1560_014:0521b09_3": "初至池州景德。",
    "X79n1560_014:0521b09_4": "謁義懷禪師。",
    "X79n1560_014:0521b10_5": "言下契悟。",
    "X79n1560_014:0521b10_6": "眾未有知者。",
    "X79n1560_014:0521b10_7": "甞為侍者。",
    "X79n1560_014:0521b10_8": "而喜寢。",
    "X79n1560_014:0521b10_9": "鼻息齁齁。",
    "X79n1560_014:0521b11_10": "聞者厭之。",
    "X79n1560_014:0521b11_11": "言於懷。",
    "X79n1560_014:0521b11_12": "懷笑曰。",
    "X79n1560_014:0521b11_13": "此子吾家精進幢也。",
    "X79n1560_014:0521b12_0": "汝輩他日。",
    "X79n1560_014:0521b12_1": "當依賴之。",
    "X79n1560_014:0521b12_2": "無多談。",
    "X79n1560_014:0521b12_3": "眾乃驚。",
    "X79n1560_014:0521b12_4": "及懷公徙住越之天衣。",
    "X79n1560_014:0521b13_5": "常之薦福。",
    "X79n1560_014:0521b13_6": "本皆從之。",
    "X79n1560_014:0521b13_7": "治平初。",
    "X79n1560_014:0521b13_8": "懷公退居吳江之聖壽院。",
    "X79n1560_014:0521b14_9": "部使者李公復圭。",
    "X79n1560_014:0521b14_10": "過懷公。",
    "X79n1560_014:0521b14_11": "夜語曰。",
    "X79n1560_014:0521b14_12": "瑞光法席虗。",
    "X79n1560_014:0521b15_13": "願得有道衲子主之。",
    "X79n1560_014:0521b15_14": "懷指本曰。",
    "X79n1560_014:0521b15_15": "無踰此道人者耳。",
    "X79n1560_014:0521b16_16": "既至瑞光。",
    "X79n1560_014:0521b16_17": "集眾擊鼓。",
    "X79n1560_014:0521b16_18": "鼓輙墮。",
    "X79n1560_014:0521b16_19": "圓轉震響。",
    "X79n1560_014:0521b16_20": "眾驚却。",
    "X79n1560_014:0521b16_21": "有僧出呼曰。",
    "X79n1560_014:0521b17_22": "此和尚法雷。",
    "X79n1560_014:0521b17_23": "震地之祥也。",
    "X79n1560_014:0521b17_24": "俄失僧所在。",
    "X79n1560_014:0521b17_25": "自是法席日盛。",
    "X79n1560_014:0521b18_26": "眾至五百人。",
    "X79n1560_014:0521b18_27": "杭州太守陳公襄。",
    "X79n1560_014:0521b18_28": "以承天興教。",
    "X79n1560_014:0521b19_29": "二剎堅請。",
    "X79n1560_014:0521b19_30": "欲往而蘇人留之益甚。",
    "X79n1560_014:0521b19_31": "又以淨慈懇請之曰。",
    "X79n1560_014:0521b20_32": "借師三年。",
    "X79n1560_014:0521b20_33": "為此邦植福。",
    "X79n1560_014:0521b20_34": "不敢久占。",
    "X79n1560_014:0521b20_35": "本嘖嘖曰。",
    "X79n1560_014:0521b21_0": "誰不欲作福。",
    "X79n1560_014:0521b21_1": "蘇人識其意。",
    "X79n1560_014:0521b21_2": "聽赴之。",
    "X79n1560_014:0521b21_3": "學者又倍於瑞光。",
    "X79n1560_014:0521b22_0": "既而蘇人。",
    "X79n1560_014:0521b22_1": "以萬壽龍華二剎。",
    "X79n1560_014:0521b22_2": "請擇居之。",
    "X79n1560_014:0521b22_3": "迎者千餘人。",
    "X79n1560_014:0521b23_0": "曰。",
    "X79n1560_014:0521b23_1": "始借吾師三年。",
    "X79n1560_014:0521b23_2": "今九載矣。",
    "X79n1560_014:0521b23_3": "義當見還。",
    "X79n1560_014:0521b23_4": "欲奪以歸。",
    "X79n1560_014:0521b23_5": "杭州守使。",
    "X79n1560_014:0521b24_6": "縣尉持卒徒護之。",
    "X79n1560_014:0521b24_7": "乃不敢奪。",
    "X79n1560_014:0521b24_8": "元豐五年。",
    "X79n1560_014:0521b24_9": "以道場付其門人善本。",
    "X79n1560_014:0521c01_10": "而居於瑞峯庵。",
    "X79n1560_014:0521c01_11": "蘇人聞之謀奪之。",
    "X79n1560_014:0521c02_0": "懼力不勝。",
    "X79n1560_014:0521c02_1": "欲發而未敢也。",
    "X79n1560_014:0521c02_2": "時會待制曾公孝序。",
    "X79n1560_014:0521c02_3": "適在蘇。",
    "X79n1560_014:0521c03_4": "葢甞問道於本。",
    "X79n1560_014:0521c03_5": "而得其至要。",
    "X79n1560_014:0521c03_6": "因謁之庵中。",
    "X79n1560_014:0521c03_7": "具舟江津。",
    "X79n1560_014:0521c04_8": "既辭去。",
    "X79n1560_014:0521c04_9": "本送之登舟。",
    "X79n1560_014:0521c04_10": "語笑中載而歸。",
    "X79n1560_014:0521c04_11": "以慰蘇人之思。",
    "X79n1560_014:0521c05_12": "於是歸本於穹窿山福臻院。",
    "X79n1560_014:0521c05_13": "時年六十三矣。",
    "X79n1560_014:0521c05_14": "未幾　神宗皇帝。",
    "X79n1560_014:0521c06_15": "闢相國寺六十有四院為八。",
    "X79n1560_014:0521c06_16": "禪二律六。",
    "X79n1560_014:0521c07_0": "以中貴人梁從政。",
    "X79n1560_014:0521c07_1": "董其事。",
    "X79n1560_014:0521c07_2": "驛召本主慧林。",
    "X79n1560_014:0521c07_3": "既至。",
    "X79n1560_014:0521c07_4": "遣使問勞三日　詔演法於寺之門。",
    "X79n1560_014:0521c08_5": "萬眾拜瞻。",
    "X79n1560_014:0521c08_6": "法會殊勝。",
    "X79n1560_014:0521c09_0": "以為彌勒從天而降人間也。",
    "X79n1560_014:0521c09_1": "翌日召對　延和殿。",
    "X79n1560_014:0521c09_2": "有司使習儀而後引。",
    "X79n1560_014:0521c10_3": "既對山呼罷。",
    "X79n1560_014:0521c10_4": "登殿賜坐。",
    "X79n1560_014:0521c10_5": "即就坐盤足跏趺。",
    "X79n1560_014:0521c11_6": "侍衛驚相顧。",
    "X79n1560_014:0521c11_7": "本自若也。",
    "X79n1560_014:0521c11_8": "賜茶至。",
    "X79n1560_014:0521c11_9": "舉盞長吸。",
    "X79n1560_014:0521c11_10": "又蕩撼之　上問受業何寺。",
    "X79n1560_014:0521c12_11": "對曰承天永安　上喜其真喻。",
    "X79n1560_014:0521c13_12": "以方興禪宗。",
    "X79n1560_014:0521c13_13": "宜善開導之旨。",
    "X79n1560_014:0521c13_14": "既退　上目送之。",
    "X79n1560_014:0521c14_0": "謂左右曰。",
    "X79n1560_014:0521c14_1": "真福慧僧也。",
    "X79n1560_014:0521c14_2": "及上元日　車駕幸相國寺。",
    "X79n1560_014:0521c15_0": "止禪眾無出迎。",
    "X79n1560_014:0521c15_1": "師奉承　睿獎。",
    "X79n1560_014:0521c15_2": "闡揚佛事。",
    "X79n1560_014:0521c15_3": "都邑四方。",
    "X79n1560_014:0521c16_0": "人以大信　神宗登遐。",
    "X79n1560_014:0521c16_1": "召本入福寧殿說法。",
    "X79n1560_014:0521c16_2": "左右以本甞為　先帝所禮敬。",
    "X79n1560_014:0521c17_3": "見之嗚咽。",
    "X79n1560_014:0521c17_4": "不自勝　哲宗加號禪師。",
    "X79n1560_014:0521c18_5": "皇叔荊王親齎勑授之。",
    "X79n1560_014:0521c18_6": "元祐元年。",
    "X79n1560_014:0521c18_7": "以老求歸　朝廷從其請　勑任便雲游。",
    "X79n1560_014:0521c19_8": "所至不得抑令住持。",
    "X79n1560_014:0521c20_0": "因欣然升座。",
    "X79n1560_014:0521c20_1": "辭眾曰。",
    "X79n1560_014:0521c20_2": "本是無家客。",
    "X79n1560_014:0521c20_3": "那堪任便遊。",
    "X79n1560_014:0521c20_4": "順風加櫓櫂。",
    "X79n1560_014:0521c21_5": "船子下楊州。",
    "X79n1560_014:0521c21_6": "既出都城。",
    "X79n1560_014:0521c21_7": "王公貴人。",
    "X79n1560_014:0521c21_8": "送者車騎相屬。",
    "X79n1560_014:0521c22_9": "本誨之曰。",
    "X79n1560_014:0521c22_10": "歲月不可把玩。",
    "X79n1560_014:0521c22_11": "老病不與人期。",
    "X79n1560_014:0521c22_12": "唯勤修勿怠。",
    "X79n1560_014:0521c23_13": "是真相為。",
    "X79n1560_014:0521c23_14": "聞者莫不流涕。",
    "X79n1560_014:0521c23_15": "其真慈善導。",
    "X79n1560_014:0521c23_16": "感人如此。",
    "X79n1560_014:0521c24_17": "非特然也。",
    "X79n1560_014:0521c24_18": "其住瑞光。",
    "X79n1560_014:0521c24_19": "民有屠牛者。",
    "X79n1560_014:0521c24_20": "牛逸赴本。",
    "X79n1560_014:0521c24_21": "跪若自訴。",
    "X79n1560_014:0522a01_22": "遂買而畜之。",
    "X79n1560_014:0522a01_23": "其住淨慈。",
    "X79n1560_014:0522a01_24": "歲大旱。",
    "X79n1560_014:0522a01_25": "湖井皆竭。",
    "X79n1560_014:0522a01_26": "寺之西隅。",
    "X79n1560_014:0522a02_27": "有甘泉自湧。",
    "X79n1560_014:0522a02_28": "得金鰻魚。",
    "X79n1560_014:0522a02_29": "因浚為井。",
    "X79n1560_014:0522a02_30": "投魚其間。",
    "X79n1560_014:0522a02_31": "寺眾千餘人。",
    "X79n1560_014:0522a03_32": "汲以不竭。",
    "X79n1560_014:0522a03_33": "民張氏有女子死。",
    "X79n1560_014:0522a03_34": "夢其母曰。",
    "X79n1560_014:0522a03_35": "我以罪為蛇。",
    "X79n1560_014:0522a04_36": "既覺得蛇於棺下。",
    "X79n1560_014:0522a04_37": "持以詣本。",
    "X79n1560_014:0522a04_38": "乃為說法。",
    "X79n1560_014:0522a04_39": "復置故處。",
    "X79n1560_014:0522a05_40": "俄有黑蟬。",
    "X79n1560_014:0522a05_41": "翔棺上。",
    "X79n1560_014:0522a05_42": "而蛇失所在。",
    "X79n1560_014:0522a05_43": "母祝曰。",
    "X79n1560_014:0522a05_44": "若我女。",
    "X79n1560_014:0522a06_45": "當入籠中。",
    "X79n1560_014:0522a06_46": "當持汝再詣淨慈。",
    "X79n1560_014:0522a06_47": "如其祝。",
    "X79n1560_014:0522a06_48": "本復為說法。",
    "X79n1560_014:0522a07_0": "是夕夢女曰。",
    "X79n1560_014:0522a07_1": "二報已解脫矣。",
    "X79n1560_014:0522a07_2": "其顯化異類。",
    "X79n1560_014:0522a07_3": "又如此。",
    "X79n1560_014:0522a07_4": "本平居恂恂。",
    "X79n1560_014:0522a08_5": "未甞以辯博為事。",
    "X79n1560_014:0522a08_6": "至其說法。",
    "X79n1560_014:0522a08_7": "則雖盛名隆勢。",
    "X79n1560_014:0522a09_8": "無所少假。",
    "X79n1560_014:0522a09_9": "高麗僧統義天。",
    "X79n1560_014:0522a09_10": "以王子奉國命。",
    "X79n1560_014:0522a09_11": "使於我朝。",
    "X79n1560_014:0522a10_12": "聞本名。",
    "X79n1560_014:0522a10_13": "請以弟子禮。",
    "X79n1560_014:0522a10_14": "見問其所得。",
    "X79n1560_014:0522a10_15": "以華嚴經對。",
    "X79n1560_014:0522a10_16": "師曰。",
    "X79n1560_014:0522a11_17": "華嚴經三身佛。",
    "X79n1560_014:0522a11_18": "報身說耶。",
    "X79n1560_014:0522a11_19": "化身說耶。",
    "X79n1560_014:0522a11_20": "法身說耶。",
    "X79n1560_014:0522a11_21": "義天曰。",
    "X79n1560_014:0522a12_22": "法身說。",
    "X79n1560_014:0522a12_23": "本曰法身徧周沙界。",
    "X79n1560_014:0522a12_24": "當時聽眾。",
    "X79n1560_014:0522a12_25": "何處蹲立。",
    "X79n1560_014:0522a13_26": "義天茫然自失。",
    "X79n1560_014:0522a13_27": "欽服益加。",
    "X79n1560_014:0522a13_28": "太子少保李公端愿。",
    "X79n1560_014:0522a13_29": "世以佛學自名。",
    "X79n1560_014:0522a14_30": "本問曰。",
    "X79n1560_014:0522a14_31": "十方同聚會。",
    "X79n1560_014:0522a14_32": "箇箇學無為。",
    "X79n1560_014:0522a14_33": "既曰無為。",
    "X79n1560_014:0522a15_34": "作麼生學。",
    "X79n1560_014:0522a15_35": "李公不能答。",
    "X79n1560_014:0522a15_36": "雪竇道法。",
    "X79n1560_014:0522a15_37": "至本大盛。",
    "X79n1560_014:0522a15_38": "老居靈巖。",
    "X79n1560_014:0522a16_39": "閉門頹然。",
    "X79n1560_014:0522a16_40": "而四方從者相望。",
    "X79n1560_014:0522a16_41": "於道不釋也。",
    "X79n1560_014:0522a16_42": "元符二年十二月甲子。",
    "X79n1560_014:0522a17_43": "將入滅沐浴而臥。",
    "X79n1560_014:0522a17_44": "門弟子環擁請曰。",
    "X79n1560_014:0522a18_45": "和尚道徧天下(或一本云。",
    "X79n1560_014:0522a18_46": "名滿天下)。",
    "X79n1560_014:0522a18_47": "今日不可無偈。",
    "X79n1560_014:0522a18_48": "幸強起安座。",
    "X79n1560_014:0522a19_49": "本熟視曰。",
    "X79n1560_014:0522a19_50": "癡子。",
    "X79n1560_014:0522a19_51": "我尋常尚懶作偈。",
    "X79n1560_014:0522a19_52": "今日特地圖箇什麼。",
    "X79n1560_014:0522a20_53": "尋常要臥便臥。",
    "X79n1560_014:0522a20_54": "不可今日特地坐也。",
    "X79n1560_014:0522a20_55": "素筆大書五字曰。",
    "X79n1560_014:0522a21_56": "後事付守榮。",
    "X79n1560_014:0522a21_57": "擲筆憨臥。",
    "X79n1560_014:0522a21_58": "若熟睡。",
    "X79n1560_014:0522a21_59": "然撼之已去矣。",
    "X79n1560_014:0522a22_60": "門弟子塔師全身於靈巖山。",
    "X79n1560_014:0522a22_61": "閱世八十。",
    "X79n1560_014:0522a22_62": "坐五十二夏。",
    "X79n1560_014:0522a24_0": "贊曰。",
    "X79n1560_014:0522a24_1": "富鄭公居洛中。",
    "X79n1560_014:0522a24_2": "見顒華嚴。",
    "X79n1560_014:0522a24_3": "誦本之語。",
    "X79n1560_014:0522a24_4": "作偈寄之曰(或一本云。",
    "X79n1560_014:0522b01_5": "富鄭公弼。",
    "X79n1560_014:0522b01_6": "得心要於顒華嚴。",
    "X79n1560_014:0522b01_7": "有偈寄本曰)。",
    "X79n1560_014:0522b01_8": "因見顒師悟入深。",
    "X79n1560_014:0522b01_9": "寅緣傳得老師心。",
    "X79n1560_014:0522b02_10": "東南謾說江山遠。",
    "X79n1560_014:0522b02_11": "目對靈光與妙音。",
    "X79n1560_014:0522b02_12": "王顯謨漢之。",
    "X79n1560_014:0522b03_13": "初見本登座。",
    "X79n1560_014:0522b03_14": "以目四顧。",
    "X79n1560_014:0522b03_15": "乃證本心。",
    "X79n1560_014:0522b03_16": "余聞馬鳴云。",
    "X79n1560_014:0522b04_17": "如來在世。",
    "X79n1560_014:0522b04_18": "眾生色心殊勝。",
    "X79n1560_014:0522b04_19": "圓音一演。",
    "X79n1560_014:0522b04_20": "隨類得解。",
    "X79n1560_014:0522b05_0": "今去佛之世二千餘年。",
    "X79n1560_014:0522b05_1": "而能使王公貴人。",
    "X79n1560_014:0522b05_2": "聞風而悟。",
    "X79n1560_014:0522b06_0": "瞻顏而證。",
    "X79n1560_014:0522b06_1": "則常隨而親炙之者。",
    "X79n1560_014:0522b06_2": "可知矣。",
    "X79n1560_014:0522b06_3": "故江西八十餘人。",
    "X79n1560_014:0522b07_4": "而本則倍之。",
    "X79n1560_014:0522b07_5": "近代授法之盛。",
    "X79n1560_014:0522b07_6": "無能加者。",
    "X79n1560_014:0522b07_7": "非願宏法道。",
    "X79n1560_014:0522b08_8": "行契佛心。",
    "X79n1560_014:0522b08_9": "何以臻此哉(一本云。",
    "X79n1560_014:0522b08_10": "自瞻顏而證之下。",
    "X79n1560_014:0522b08_11": "但云。",
    "X79n1560_014:0522b08_12": "則其大願真慈之力。",
    "X79n1560_014:0522b09_13": "無愧紹隆之職者也)。",
    "X79n1560_014:0522b11_0": "禪林僧寶傳卷第十四"
}