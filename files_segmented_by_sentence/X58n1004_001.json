{
    "X58n1004_001:0425b06_0": "五蘊觀",
    "X58n1004_001:0425b08_0": "沙門　澄觀　述",
    "X58n1004_001:0425b09_0": "問。",
    "X58n1004_001:0425b09_1": "凡夫之人欲求解脫。",
    "X58n1004_001:0425b09_2": "當云何修。",
    "X58n1004_001:0425b09_3": "答曰。",
    "X58n1004_001:0425b09_4": "當修二觀。",
    "X58n1004_001:0425b09_5": "二觀者何。",
    "X58n1004_001:0425b10_6": "一人空觀。",
    "X58n1004_001:0425b10_7": "二法空觀。",
    "X58n1004_001:0425b10_8": "夫生死之本莫過人法二執。",
    "X58n1004_001:0425b11_9": "迷身心總相。",
    "X58n1004_001:0425b11_10": "故執人我為實有。",
    "X58n1004_001:0425b11_11": "迷五蘊自相。",
    "X58n1004_001:0425b11_12": "故計法我為實有。",
    "X58n1004_001:0425b12_13": "計人我者。",
    "X58n1004_001:0425b12_14": "用初觀照之。",
    "X58n1004_001:0425b12_15": "知五蘊和合假名為人。",
    "X58n1004_001:0425b13_16": "一一諦觀。",
    "X58n1004_001:0425b13_17": "但見五蘊。",
    "X58n1004_001:0425b13_18": "求人我相終不可得。",
    "X58n1004_001:0425b14_0": "云何名為五蘊。",
    "X58n1004_001:0425b14_1": "色受想行識是。",
    "X58n1004_001:0425b14_2": "云何觀之。",
    "X58n1004_001:0425b14_3": "身則色蘊。",
    "X58n1004_001:0425b15_0": "所謂地水火風是。",
    "X58n1004_001:0425b15_1": "其相如何。",
    "X58n1004_001:0425b15_2": "堅則地。",
    "X58n1004_001:0425b15_3": "潤則水。",
    "X58n1004_001:0425b15_4": "煖則火。",
    "X58n1004_001:0425b16_0": "動則風。",
    "X58n1004_001:0425b16_1": "觀心則四蘊。",
    "X58n1004_001:0425b16_2": "所謂受想行識是其相。",
    "X58n1004_001:0425b16_3": "如何領納為受。",
    "X58n1004_001:0425b17_4": "取相為相。",
    "X58n1004_001:0425b17_5": "造作為行。",
    "X58n1004_001:0425b17_6": "了別為識。",
    "X58n1004_001:0425b17_7": "若能依此身心相。",
    "X58n1004_001:0425b18_8": "諦觀分明。",
    "X58n1004_001:0425b18_9": "於一切處但見五蘊。",
    "X58n1004_001:0425b18_10": "求人我相終不可得。",
    "X58n1004_001:0425b19_11": "名人空觀。",
    "X58n1004_001:0425b19_12": "乘此觀。",
    "X58n1004_001:0425b19_13": "行出分段生死。",
    "X58n1004_001:0425b19_14": "永處涅槃。",
    "X58n1004_001:0425b19_15": "名二乘解脫。",
    "X58n1004_001:0425b20_16": "計法我者用後觀照之。",
    "X58n1004_001:0425b20_17": "知一一蘊皆從緣生。",
    "X58n1004_001:0425b21_18": "都無自性。",
    "X58n1004_001:0425b21_19": "求蘊相不可得。",
    "X58n1004_001:0425b21_20": "則五蘊皆空。",
    "X58n1004_001:0425b21_21": "名法空觀。",
    "X58n1004_001:0425b22_0": "若二觀雙照。",
    "X58n1004_001:0425b22_1": "了人我法我。",
    "X58n1004_001:0425b22_2": "畢竟空無所有。",
    "X58n1004_001:0425b22_3": "離諸怖畏。",
    "X58n1004_001:0425b23_0": "度一切苦厄。",
    "X58n1004_001:0425b23_1": "出變易生死。",
    "X58n1004_001:0425b23_2": "名究竟解脫。",
    "X58n1004_001:0425b23_3": "問。",
    "X58n1004_001:0425b23_4": "夫求解脫。",
    "X58n1004_001:0425b24_0": "祗是了妄證真。",
    "X58n1004_001:0425b24_1": "但能契真如理寂。",
    "X58n1004_001:0425b24_2": "然無念則便離縛。",
    "X58n1004_001:0425c01_0": "何假興心觀蘊方求解脫。",
    "X58n1004_001:0425c01_1": "豈不乖理哉。",
    "X58n1004_001:0425c01_2": "答。",
    "X58n1004_001:0425c01_3": "離蘊真妄約何而立。",
    "X58n1004_001:0425c02_4": "且五蘊者身心之異名。",
    "X58n1004_001:0425c02_5": "行人若不識身心。",
    "X58n1004_001:0425c03_0": "真妄何能懸契。",
    "X58n1004_001:0425c03_1": "不達真妄之本。",
    "X58n1004_001:0425c03_2": "諸行徒施。",
    "X58n1004_001:0425c03_3": "故經云。",
    "X58n1004_001:0425c03_4": "若於虗空終不能成。",
    "X58n1004_001:0425c04_5": "斯之謂也。",
    "X58n1004_001:0425c04_6": "且計人我者。",
    "X58n1004_001:0425c04_7": "凡夫之執也。",
    "X58n1004_001:0425c05_8": "計法我者。",
    "X58n1004_001:0425c05_9": "二乘之滯也。",
    "X58n1004_001:0425c05_10": "故令修二觀。",
    "X58n1004_001:0425c05_11": "方能了妄證真。",
    "X58n1004_001:0425c06_12": "豈可離也。",
    "X58n1004_001:0425c08_0": "五蘊觀(終)"
}