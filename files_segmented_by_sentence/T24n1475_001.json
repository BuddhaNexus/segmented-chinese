[
    {
        "source_sentence": "沙彌尼離戒文沙彌尼戒經",
        "from": "T24n1475_001:0938b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東晉失譯",
        "from": "T24n1475_001:0938b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善女人字某言：某所受穢惡之身，充弊人流",
        "from": "T24n1475_001:0938b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不堪下行。",
        "from": "T24n1475_001:0938b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剋己自悔，願為弟子，受持正戒終身奉行。",
        "from": "T24n1475_001:0938b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用何等故作沙彌離？",
        "from": "T24n1475_001:0938b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用歸命佛、歸命法、歸命比丘僧故。",
        "from": "T24n1475_001:0938b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用剃頭、被袈裟故。",
        "from": "T24n1475_001:0938b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幾戒？",
        "from": "T24n1475_001:0938b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙彌離有十戒。",
        "from": "T24n1475_001:0938b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、盡形壽不得殺生，不得教人殺生。",
        "from": "T24n1475_001:0938b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二、盡形壽不得盜，不得教人盜。",
        "from": "T24n1475_001:0938b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三、盡形壽不得婬，不得教人婬。",
        "from": "T24n1475_001:0938b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四、盡形壽不得嫁，不得教人嫁。",
        "from": "T24n1475_001:0938b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五、盡形壽不得妄語，不得教人妄語。",
        "from": "T24n1475_001:0938b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六、盡形壽不得歌舞，不得教人歌舞，不得彈箏吹笛。",
        "from": "T24n1475_001:0938b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七、盡形壽不得著香華脂粉，不得教人著脂粉。",
        "from": "T24n1475_001:0938c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八、盡形壽不得於高好刻鏤床上臥，不得教人作好床臥。",
        "from": "T24n1475_001:0938c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九、盡形壽不得飲酒，不得教人飲酒。",
        "from": "T24n1475_001:0938c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十、盡形壽過日中不得復食，不得教人食。",
        "from": "T24n1475_001:0938c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威儀七十事。",
        "from": "T24n1475_001:0938c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得著繒綵衣，　　不得作綵衣與人，",
        "from": "T24n1475_001:0938c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得惡口相調，　　不得教人作不急語。",
        "from": "T24n1475_001:0938c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得與優婆夷相看形體大笑。",
        "from": "T24n1475_001:0938c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得於避處裸形自弄身體。",
        "from": "T24n1475_001:0938c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得照鏡摩抆面目畫眉。",
        "from": "T24n1475_001:0938c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得瞋恨羞慚恚語。",
        "from": "T24n1475_001:0938c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得思念與男子共交會問優婆夷何如。",
        "from": "T24n1475_001:0938c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得坐毛綿上。",
        "from": "T24n1475_001:0938c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得著鞾履，不應作履。",
        "from": "T24n1475_001:0938c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得貪家錢財強索人物。",
        "from": "T24n1475_001:0938c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得坐他婦女床上開器視衣，言是好彼醜。",
        "from": "T24n1475_001:0938c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六以上應作沙彌離。",
        "from": "T24n1475_001:0938c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "素無瑕穢貞良完具無所毀辱，父母見聽乃得為道。",
        "from": "T24n1475_001:0938c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "素不貞良，不應為道。",
        "from": "T24n1475_001:0938c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石人匿病，不應為道。",
        "from": "T24n1475_001:0938c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得與比丘僧同室宿。",
        "from": "T24n1475_001:0938c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得共坐。",
        "from": "T24n1475_001:0938c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得相形笑。",
        "from": "T24n1475_001:0938c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得臥沙彌離衣被中。",
        "from": "T24n1475_001:0938c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得錯法衣共器誤著僧衣。",
        "from": "T24n1475_001:0938c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得手授男子物。",
        "from": "T24n1475_001:0938c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設欲與物，當置著地却使取之。",
        "from": "T24n1475_001:0938c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得與優婆夷露浴。",
        "from": "T24n1475_001:0938c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得獨至僧房問義。",
        "from": "T24n1475_001:0938c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得說俗事。",
        "from": "T24n1475_001:0938c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得笑經語。",
        "from": "T24n1475_001:0938c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得左右顧視。",
        "from": "T24n1475_001:0938c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得手據机上。",
        "from": "T24n1475_001:0938c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受經有五事：",
        "from": "T24n1475_001:0938c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當與長老尼共行；",
        "from": "T24n1475_001:0938c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去坐六尺；",
        "from": "T24n1475_001:0938c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長跪；",
        "from": "T24n1475_001:0938c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但得問義；",
        "from": "T24n1475_001:0938c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當識句逗。",
        "from": "T24n1475_001:0938c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "省師病有四事，有親應得省：",
        "from": "T24n1475_001:0938c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三人共行；",
        "from": "T24n1475_001:0938c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去床六尺；",
        "from": "T24n1475_001:0938c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長跪問訊語訖應去，不得論事。",
        "from": "T24n1475_001:0938c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜臥有五事：",
        "from": "T24n1475_001:0939a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當頭輸佛；",
        "from": "T24n1475_001:0939a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當傴臥不得申脚；",
        "from": "T24n1475_001:0939a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得仰向頻申；",
        "from": "T24n1475_001:0939a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得袒裸自露；",
        "from": "T24n1475_001:0939a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得手近不淨處。",
        "from": "T24n1475_001:0939a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至檀越家有五事：",
        "from": "T24n1475_001:0939a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當先到精舍禮佛；",
        "from": "T24n1475_001:0939a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮師僧；",
        "from": "T24n1475_001:0939a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優婆夷請乃應入；",
        "from": "T24n1475_001:0939a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當報師僧；",
        "from": "T24n1475_001:0939a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直視六尺當獨坐床。",
        "from": "T24n1475_001:0939a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止檀越家，有五事不應法：",
        "from": "T24n1475_001:0939a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得至婦女房中語戲；",
        "from": "T24n1475_001:0939a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得至竈下坐食；",
        "from": "T24n1475_001:0939a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得與婢共私語；",
        "from": "T24n1475_001:0939a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得獨至舍後、不得與人共上廁；",
        "from": "T24n1475_001:0939a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得上男子廁上。",
        "from": "T24n1475_001:0939a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入浴室有五事：",
        "from": "T24n1475_001:0939a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得與優婆夷共洗；",
        "from": "T24n1475_001:0939a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得與婢使共洗；",
        "from": "T24n1475_001:0939a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得與小兒共洗；",
        "from": "T24n1475_001:0939a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得取他成事水；",
        "from": "T24n1475_001:0939a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得自視形體隱處。",
        "from": "T24n1475_001:0939a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香有五事：",
        "from": "T24n1475_001:0939a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得左右遠視；",
        "from": "T24n1475_001:0939a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得獨與優婆塞共燒香；",
        "from": "T24n1475_001:0939a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得獨與婢使；",
        "from": "T24n1475_001:0939a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不掣脚；",
        "from": "T24n1475_001:0939a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得背像。",
        "from": "T24n1475_001:0939a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝起有五事：",
        "from": "T24n1475_001:0939a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當清淨却著法衣；",
        "from": "T24n1475_001:0939a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先禮經像；",
        "from": "T24n1475_001:0939a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却禮師僧；",
        "from": "T24n1475_001:0939a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去六尺問訊；",
        "from": "T24n1475_001:0939a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却行出戶。",
        "from": "T24n1475_001:0939a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師與語有五事：",
        "from": "T24n1475_001:0939a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問經戒義不知當請；",
        "from": "T24n1475_001:0939a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見責當即自悔過；",
        "from": "T24n1475_001:0939a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得覆藏；",
        "from": "T24n1475_001:0939a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得自理；",
        "from": "T24n1475_001:0939a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得惡眼視師。",
        "from": "T24n1475_001:0939a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浣衣有四事：",
        "from": "T24n1475_001:0939a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於屏處當長跪；",
        "from": "T24n1475_001:0939a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當棄惡水於屏處，不得於人道徑中；",
        "from": "T24n1475_001:0939a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當待燥燥應収；",
        "from": "T24n1475_001:0939a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得令墮地。",
        "from": "T24n1475_001:0939a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道有五事：",
        "from": "T24n1475_001:0939a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當與三人共行；",
        "from": "T24n1475_001:0939a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當與大尼共行；",
        "from": "T24n1475_001:0939a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若當與優婆夷共行；",
        "from": "T24n1475_001:0939a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當視前六尺；",
        "from": "T24n1475_001:0939a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當著法衣。",
        "from": "T24n1475_001:0939a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云：",
        "from": "T24n1475_001:0939a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「女人受性，大出雜態姿則憙好婬泆無禮，故為女人。",
        "from": "T24n1475_001:0939a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以自覺，得蒙釋迦文佛大恩，普三界開視道地得值法，其有自識本行，歸命佛者少。",
        "from": "T24n1475_001:0939a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛言：",
        "from": "T24n1475_001:0939a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『觀見人間，上至二十八天、下至十八地獄，皆苦無樂。",
        "from": "T24n1475_001:0939b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』故結戒以訓後生。",
        "from": "T24n1475_001:0939b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告諸弟子：",
        "from": "T24n1475_001:0939b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『為道至難，尠能去家斷絕六情。",
        "from": "T24n1475_001:0939b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受佛重戒捐棄愛欲，有其然者少。",
        "from": "T24n1475_001:0939b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「佛告諸弟子：",
        "from": "T24n1475_001:0939b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝慎莫妄度沙彌離。",
        "from": "T24n1475_001:0939b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女人姿態難保悅在，須臾以復更生惡意。",
        "from": "T24n1475_001:0939b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如水泡一起一滅，無有常定。",
        "from": "T24n1475_001:0939b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能見人根、觀其大行，見其宿罪今以盡度便得道者，急當度之。",
        "from": "T24n1475_001:0939b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自非菩薩阿羅漢，不可度尼。",
        "from": "T24n1475_001:0939b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」除覲說戒節度。",
        "from": "T24n1475_001:0939b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維那先具舍羅籌、香火、戒文。",
        "from": "T24n1475_001:0939b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨掃除精舍，却鳴揵槌，燒香禮佛唄呪願竟，呪願鬼子母。",
        "from": "T24n1475_001:0939b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各便就坐，整法服叉手靜默。",
        "from": "T24n1475_001:0939b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維那便行香火人。",
        "from": "T24n1475_001:0939b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各說一偈。",
        "from": "T24n1475_001:0939b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維那在戶裏三唱：",
        "from": "T24n1475_001:0939b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「白衣出，除覲布薩竟。",
        "from": "T24n1475_001:0939b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」三彈指令白衣遠去，莫令聞說戒。",
        "from": "T24n1475_001:0939b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "音聲訖開戶，維那唱言：",
        "from": "T24n1475_001:0939b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「靜坐除覲默，今布薩。",
        "from": "T24n1475_001:0939b15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」亦三過唱訖。",
        "from": "T24n1475_001:0939b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便維那捉籌，上座尼前長跪，布薩人與一籌，亦自取訖，便還斂籌，別著一處。",
        "from": "T24n1475_001:0939b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還取未布籌手捉，從上座尼前問：",
        "from": "T24n1475_001:0939b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「誰脫不受籌？",
        "from": "T24n1475_001:0939b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得者便當言未，已得者當默。",
        "from": "T24n1475_001:0939b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」訖竟，維那數籌有幾人，數知少多。",
        "from": "T24n1475_001:0939b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維那唱言：",
        "from": "T24n1475_001:0939b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「除覲等若干人，隨年號月，十五便言十五日，月盡便言三十日，於某州某郡某縣某檀越精舍中說戒。",
        "from": "T24n1475_001:0939b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願持說戒功德，歸流大檀越眷屬一切安隱，命過者生天人中增益功德，十方厄難普使解脫。",
        "from": "T24n1475_001:0939b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」各呪願訖，維那長跪上座尼前，請能說戒人令說戒，復請一人三唄讀經。",
        "from": "T24n1475_001:0939b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀經竟唄，唄訖，上座普呪願，下座尼皆長跪受呪願。",
        "from": "T24n1475_001:0939b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維那唱：",
        "from": "T24n1475_001:0939b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「皆共禮佛。",
        "from": "T24n1475_001:0939b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」禮般若訖，下坐尼皆禮大尼訖，便維那長跪唱言：",
        "from": "T24n1475_001:0939b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「隨所安。",
        "from": "T24n1475_001:0939b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」請說戒、讀經人共別坐一床上。",
        "from": "T24n1475_001:0939c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙彌尼離戒文按此戒名，國本、宋本及《開元錄》皆云沙彌尼離戒文。",
        "from": "T24n1475_001:0939c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丹本即云「沙彌尼雜戒文」。",
        "from": "T24n1475_001:0939c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今撿正文，諸本皆非。",
        "from": "T24n1475_001:0939c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何則？",
        "from": "T24n1475_001:0939c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按此譯之「離」字，與他譯之「尼」字，但梵音楚夏耳。",
        "from": "T24n1475_001:0939c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾不是沙彌尼之離戒文，亦不是沙彌尼之雜戒文。",
        "from": "T24n1475_001:0939c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並乖正文，故今可直云「沙彌離戒文」乃正耳。",
        "from": "T24n1475_001:0939c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然無所據，不敢即正。",
        "from": "T24n1475_001:0939c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直書其意，以待好古雅正君子焉。",
        "from": "T24n1475_001:0939c10_4",
        "context_with_next_sentence": true
    }
]