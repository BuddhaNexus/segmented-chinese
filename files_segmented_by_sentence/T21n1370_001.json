[
    {
        "source_sentence": "佛說持明藏八大總持王經",
        "from": "T21n1370_001:0886b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T21n1370_001:0886b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1370_001:0886b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊為末世眾生。",
        "from": "T21n1370_001:0886b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說持明藏八大總持王經。",
        "from": "T21n1370_001:0886b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼未來四眾之中諸修行人。",
        "from": "T21n1370_001:0886b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切眾生而作利益。",
        "from": "T21n1370_001:0886b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至求諸悉地而獲成就。",
        "from": "T21n1370_001:0886b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若有行人。",
        "from": "T21n1370_001:0886b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發勇猛心堅固不退。",
        "from": "T21n1370_001:0886b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此八大總持而修行者。",
        "from": "T21n1370_001:0886b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須清淨身心內外嚴潔。",
        "from": "T21n1370_001:0886b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直至成就無令間斷。",
        "from": "T21n1370_001:0886b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若暫間斷不獲成就。",
        "from": "T21n1370_001:0886b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲持誦而修行者。",
        "from": "T21n1370_001:0886c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每持誦時先須稱念。",
        "from": "T21n1370_001:0886c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨一切諸佛及法聖眾。",
        "from": "T21n1370_001:0886c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是歸命三寶已竟即虔心持誦。",
        "from": "T21n1370_001:0886c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1370_001:0886c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨阿致嚩致曩致吒計姹囉計姹計烏嚕摩帝嚕嚕摩帝覩嚕呬隷彌隷薩哩嚩二合惹拏二合尾波那誐曩莫薩哩嚩二合三摩三沒馱曩悉殿覩滿怛囉二合波曩莎賀此陀羅尼。",
        "from": "T21n1370_001:0886c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是過去無量正等正覺二足世尊之所宣說。",
        "from": "T21n1370_001:0886c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲修行於諸眾生。",
        "from": "T21n1370_001:0886c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作息災增益及擁護者。",
        "from": "T21n1370_001:0886c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須持誦精熟。",
        "from": "T21n1370_001:0886c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成先行已有大功力。",
        "from": "T21n1370_001:0886c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然可為於眾生。",
        "from": "T21n1370_001:0886c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼法可於中秋時作有大功力。",
        "from": "T21n1370_001:0886c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於是時作者持念易成。",
        "from": "T21n1370_001:0886c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除八大怖畏。",
        "from": "T21n1370_001:0886c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復眾生常持誦者。",
        "from": "T21n1370_001:0886c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒得擁護晝夜安樂。",
        "from": "T21n1370_001:0886c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切不祥悉皆遠離。",
        "from": "T21n1370_001:0886c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德增長無諸苦惱。",
        "from": "T21n1370_001:0886c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在王城或遇兵革。",
        "from": "T21n1370_001:0886c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲脫種種危難者。",
        "from": "T21n1370_001:0886c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擇取吉晨於日午時。",
        "from": "T21n1370_001:0886c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦作法當得解脫。",
        "from": "T21n1370_001:0886c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若被天龍鬼神種種持魅者。",
        "from": "T21n1370_001:0886c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能解除。",
        "from": "T21n1370_001:0886c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以持誦力至於枯樹。",
        "from": "T21n1370_001:0886c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可能令再生花菓。",
        "from": "T21n1370_001:0886c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至令持誦之人。",
        "from": "T21n1370_001:0886c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲宿命通知無量生事。",
        "from": "T21n1370_001:0886c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0886c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普俱入嚩二合隷普俱入嚩二合隷三野替摩賀引薩滿多摩賀入嚩二合隷帝護計目計護計目計摩賀設䜝抳囉彌多野設細舍覩摩賀入嚩二合隷入嚩二合羅帝悉地蹉僧左摩囉抳拏莎賀此陀羅尼。",
        "from": "T21n1370_001:0886c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是行輪迴義成童子之所宣說。",
        "from": "T21n1370_001:0886c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可於十月作持誦法。",
        "from": "T21n1370_001:0886c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生而作利益。",
        "from": "T21n1370_001:0886c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲無量清淨果報復說陀羅尼曰。",
        "from": "T21n1370_001:0886c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酥那替引酥吠那那癡去聲呼下同烏那癡涅里二合癡婆惹儞引馱末隷引蹉末曩致嚩致怛布二合嚕曩吒嚩吒儞引那替伊迦拶囉󰂛地薩際拏囉珂悉地拶泥去呼呬䜝泥同上尾莎賀此陀羅尼。",
        "from": "T21n1370_001:0887a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是緣覺之所宣說。",
        "from": "T21n1370_001:0887a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可於冬時求清淨處作持誦法。",
        "from": "T21n1370_001:0887a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能擁護一切眾生。",
        "from": "T21n1370_001:0887a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多囉唧嚕嚕唧嚕吠嚕吠囉吒計呬隷彌隷帝隷始隷曩致嚩致俱曩致阿曩末帝摩曩末帝路引隷迦娑迦悉迦娑始羅引路引羅摩馱烏末野尼頗娑頗細引唵引尾婆嚩帝引莎賀此陀羅尼。",
        "from": "T21n1370_001:0887a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是俱胝羅漢之所宣說。",
        "from": "T21n1370_001:0887a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能擁護一切眾生離諸怖畏。",
        "from": "T21n1370_001:0887a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法可於春時持誦。",
        "from": "T21n1370_001:0887a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作息災增益定獲成就。",
        "from": "T21n1370_001:0887a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依法無失功行不退。",
        "from": "T21n1370_001:0887a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可得隱身無人能見。",
        "from": "T21n1370_001:0887a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說心陀羅尼曰。",
        "from": "T21n1370_001:0887a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引按多捺嚩二合彌尾婆嚩酥莎賀此心明以所求事。",
        "from": "T21n1370_001:0887a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復稱名誦九洛叉所求必遂。",
        "from": "T21n1370_001:0887a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至數滿時備種種香華燃燈。",
        "from": "T21n1370_001:0887a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養佛法僧菩薩緣覺聲聞等。",
        "from": "T21n1370_001:0887a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若乞食者當持鉢北行。",
        "from": "T21n1370_001:0887a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於聚落可次第行乞。",
        "from": "T21n1370_001:0887a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以七家為限不得驀越而彼七家所施之後福及七族所供養華可求迦羅尾羅華。",
        "from": "T21n1370_001:0887a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及龍華等而為最上。",
        "from": "T21n1370_001:0887a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑嚩儞娑嚩儞娑嚩曩目契嚕半彌僧呬引摩賀迦波禰引唵引唧引隷彌隷唵引迦伊底尾儞虞賀𤚥引蹉曩野莎賀此陀羅尼乃是預流之所宣說。",
        "from": "T21n1370_001:0887a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法可於夏時持誦以求成就。",
        "from": "T21n1370_001:0887a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法之處當求屍林。",
        "from": "T21n1370_001:0887a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或兩河間或橋上建立持誦若為他人作擁護者。",
        "from": "T21n1370_001:0887a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先求清淨童女合線貫珠。",
        "from": "T21n1370_001:0887b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦一洛叉所求成就。",
        "from": "T21n1370_001:0887b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或取自身左肋上血。",
        "from": "T21n1370_001:0887b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搵白蓮華護摩。",
        "from": "T21n1370_001:0887b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦八百遍所求皆得。",
        "from": "T21n1370_001:0887b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以黑貓兒死豬死人等左眼睛。",
        "from": "T21n1370_001:0887b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同研和合并三金同為丸。",
        "from": "T21n1370_001:0887b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用娑羅樹汁同服。",
        "from": "T21n1370_001:0887b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求必得成就。",
        "from": "T21n1370_001:0887b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿迦細引迦細引曩迦細引誐拏迦羅細引鉢囉二合拏那旦鉢囉二合拏那嚩怛嚩二合唵引尾馱摩賀引尾馱細引那閉多那閉嚕嚕弭呬唧隷彌隷阿𡁠多𡁠拏哩野彌覩野曩謨薩哩嚩二合沒馱三沒地三婆嚩二合喃莎賀此陀羅尼。",
        "from": "T21n1370_001:0887b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是無能勝菩薩之所宣說。",
        "from": "T21n1370_001:0887b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有志心持誦經其一年。",
        "from": "T21n1370_001:0887b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必獲色力殊勝吉祥安樂。",
        "from": "T21n1370_001:0887b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足功德名稱遠聞。",
        "from": "T21n1370_001:0887b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨囉旦曩二合怛囉二合夜野曩謨娜誐彌鼻曩謨囉俱舍嚩哩曳二合曩謨馱覩毘藥二合迦引曳引曳引阿曩閉尾惹儞引具具烏沒馱二合佉誐作羯囉二合莎賀此陀羅尼。",
        "from": "T21n1370_001:0887b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是阿那含之所宣說。",
        "from": "T21n1370_001:0887b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能救一切病苦。",
        "from": "T21n1370_001:0887b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有患者行人執其手誦此。",
        "from": "T21n1370_001:0887b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持乳汁令服及令洗身。",
        "from": "T21n1370_001:0887b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設臨命終亦可除差。",
        "from": "T21n1370_001:0887b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或呪摩曩尸羅藥。",
        "from": "T21n1370_001:0887b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安病人耳中亦得除差。",
        "from": "T21n1370_001:0887b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人成先行已欲求悉地者。",
        "from": "T21n1370_001:0887b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或執數珠或輪。",
        "from": "T21n1370_001:0887b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但依法持誦。",
        "from": "T21n1370_001:0887b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人設使無福。",
        "from": "T21n1370_001:0887b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法力故亦獲成就。",
        "from": "T21n1370_001:0887b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波散儞引迦羅里波散儞引摩迦引里波散儞引摩迦引里波散儞引多迦引里多迦引里波散儞引摩里迦引里波散儞引嚕羅里波散儞引波散曩迦引里帝曩謨阿左哩野二合波引那引喃引唵引波散儞引酥路引彌計莎賀此陀羅尼我於往昔為菩薩時。",
        "from": "T21n1370_001:0887c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名妙意持明天。",
        "from": "T21n1370_001:0887c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四足中現身。",
        "from": "T21n1370_001:0887c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼而作利益。",
        "from": "T21n1370_001:0887c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有志心受持者所願具足若有眾生造眾惡業當墮畜生者。",
        "from": "T21n1370_001:0887c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此陀羅尼威德力故。",
        "from": "T21n1370_001:0887c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除滅先罪定生人天。",
        "from": "T21n1370_001:0887c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼能成就種種事業。",
        "from": "T21n1370_001:0887c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人欲求成就種種事業者。",
        "from": "T21n1370_001:0887c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須修先行法。",
        "from": "T21n1370_001:0887c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得圓滿已。",
        "from": "T21n1370_001:0887c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後將所求成就物。",
        "from": "T21n1370_001:0887c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大持明王前。",
        "from": "T21n1370_001:0887c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或日三時或六時持誦。",
        "from": "T21n1370_001:0887c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每一時誦千遍為限。",
        "from": "T21n1370_001:0887c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得虧闕直至悉地得悉地已所作圓滿。",
        "from": "T21n1370_001:0887c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲降冤家者。",
        "from": "T21n1370_001:0887c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當面南坐。",
        "from": "T21n1370_001:0887c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手畫冤家頭面。",
        "from": "T21n1370_001:0887c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手按呪之冤自降伏。",
        "from": "T21n1370_001:0887c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人一日三時恒持誦者。",
        "from": "T21n1370_001:0887c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一切人欽伏。",
        "from": "T21n1370_001:0887c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人面向南。",
        "from": "T21n1370_001:0887c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以烏麻作護摩者心所求事一一皆得。",
        "from": "T21n1370_001:0887c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以鉢置地手按加持之必獲多施。",
        "from": "T21n1370_001:0887c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若加持酥食之。",
        "from": "T21n1370_001:0887c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不患瘧及常輕安。",
        "from": "T21n1370_001:0887c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若女人無乳。",
        "from": "T21n1370_001:0887c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持酥及鹽食之有乳。",
        "from": "T21n1370_001:0887c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若女人無子。",
        "from": "T21n1370_001:0887c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持栴檀華為粖。",
        "from": "T21n1370_001:0887c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日三時點額。",
        "from": "T21n1370_001:0887c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以藥繫項或繫手臂定生福子。",
        "from": "T21n1370_001:0887c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若女人惡性者。",
        "from": "T21n1370_001:0887c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫誦加持之即性改柔善。",
        "from": "T21n1370_001:0887c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若夫惡性者。",
        "from": "T21n1370_001:0887c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻誦加持之和栴檀華粖令食。",
        "from": "T21n1370_001:0887c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即相欽重。",
        "from": "T21n1370_001:0887c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若人渡水至中流深處。",
        "from": "T21n1370_001:0887c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身力疲乏慮其沈沒。",
        "from": "T21n1370_001:0887c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心若憶念即得淺處。",
        "from": "T21n1370_001:0887c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或加持枯樹再生華葉。",
        "from": "T21n1370_001:0887c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若加持枯池即水自瀰滿。",
        "from": "T21n1370_001:0887c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑引帝引阿迦致尾迦致補補紺切囉尼二合阿引誐帝引娑摩引呬帝引悉地娑三帝引三波那引𧹞曩謨引娑覩二合阿左里阿𧹞此陀羅尼我於往昔。",
        "from": "T21n1370_001:0888a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為極怒持明王時之所宣說。",
        "from": "T21n1370_001:0888a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人常受持者。",
        "from": "T21n1370_001:0888a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲吉祥勝事。",
        "from": "T21n1370_001:0888a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持誦成先行已取畢鉢羅華尾孕二合摩菓藏粖。",
        "from": "T21n1370_001:0888a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後用酥蜜和然。",
        "from": "T21n1370_001:0888a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持乳汁同服。",
        "from": "T21n1370_001:0888a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後持誦七晝夜得大聰明。",
        "from": "T21n1370_001:0888a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以虎及獯狐猫兒猪等。",
        "from": "T21n1370_001:0888a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各取眼睛為粖。",
        "from": "T21n1370_001:0888a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等分合和作丸。",
        "from": "T21n1370_001:0888a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持內於鼻中當得隱身。",
        "from": "T21n1370_001:0888a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以微苦根藥。",
        "from": "T21n1370_001:0888a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與乳蜜同和。",
        "from": "T21n1370_001:0888a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持食之得顏貌不老。",
        "from": "T21n1370_001:0888a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於屍林或獨樹下或四衢道。",
        "from": "T21n1370_001:0888a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之處不食持誦。",
        "from": "T21n1370_001:0888a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若獲成就當得空中行住。",
        "from": "T21n1370_001:0888a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可遊於欲色天界。",
        "from": "T21n1370_001:0888a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得劍成就而為最上。",
        "from": "T21n1370_001:0888a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於海岸及大河岸。",
        "from": "T21n1370_001:0888a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常食乳汁或肉汁。",
        "from": "T21n1370_001:0888a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦十箇月。",
        "from": "T21n1370_001:0888a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日相應身心不退。",
        "from": "T21n1370_001:0888a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必獲海中河中異寶。",
        "from": "T21n1370_001:0888a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於山上有龍處。",
        "from": "T21n1370_001:0888a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常食菉豆及酥持誦。",
        "from": "T21n1370_001:0888a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得龍送珠金。",
        "from": "T21n1370_001:0888a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於憂曇鉢樹下持誦。",
        "from": "T21n1370_001:0888a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常乞食誦不間斷。",
        "from": "T21n1370_001:0888a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至成就呪酥。",
        "from": "T21n1370_001:0888a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾間成水。",
        "from": "T21n1370_001:0888a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服之得解世間種種之法。",
        "from": "T21n1370_001:0888a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以土捏作師子加持。",
        "from": "T21n1370_001:0888a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得成就乘之可往天界。",
        "from": "T21n1370_001:0888a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸法一一修行。",
        "from": "T21n1370_001:0888a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求成就者。",
        "from": "T21n1370_001:0888a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得先行圓滿已。",
        "from": "T21n1370_001:0888a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法復誦八千遍必獲悉地。",
        "from": "T21n1370_001:0888a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是持明藏八大總持王已。",
        "from": "T21n1370_001:0888a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告阿難言。",
        "from": "T21n1370_001:0888a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此祕密法汝善受持。",
        "from": "T21n1370_001:0888a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使於未來流傳不斷。",
        "from": "T21n1370_001:0888a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令修行者與諸眾生作大利益。",
        "from": "T21n1370_001:0888a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼阿難受佛教勅。",
        "from": "T21n1370_001:0888a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜踊躍作禮而退。",
        "from": "T21n1370_001:0888a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說持明藏八大總持王經",
        "from": "T21n1370_001:0888a25_100",
        "context_with_next_sentence": false
    }
]