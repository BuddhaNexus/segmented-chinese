{
    "X85n1594_012:0576b04_0": "佛祖綱目卷第十二(昃字號)",
    "X85n1594_012:0576b06_0": "甲子(周威烈王九年起)庚辰(安王元年)丙午(烈王元年)癸丑(顯王元年)癸亥(周顯王十一年止)(戊戌)十一祖富那夜奢傳法馬鳴富那夜奢。",
    "X85n1594_012:0576b09_1": "華氏國人。",
    "X85n1594_012:0576b09_2": "姓瞿曇氏。",
    "X85n1594_012:0576b09_3": "父寶身。",
    "X85n1594_012:0576b09_4": "有子七人。",
    "X85n1594_012:0576b09_5": "夜奢最少。",
    "X85n1594_012:0576b10_6": "幼即與諸兄異尚。",
    "X85n1594_012:0576b10_7": "嘗曰。",
    "X85n1594_012:0576b10_8": "若遇大士。",
    "X85n1594_012:0576b10_9": "坐於道場。",
    "X85n1594_012:0576b11_0": "我則詣彼。",
    "X85n1594_012:0576b11_1": "親近隨喜。",
    "X85n1594_012:0576b11_2": "及遇脇尊者。",
    "X85n1594_012:0576b11_3": "遂授法。",
    "X85n1594_012:0576b11_4": "夜奢教被無量得果者。",
    "X85n1594_012:0576b12_5": "且五百矣。",
    "X85n1594_012:0576b12_6": "後至波羅柰國。",
    "X85n1594_012:0576b12_7": "有一長者。",
    "X85n1594_012:0576b12_8": "來趣其會。",
    "X85n1594_012:0576b13_9": "夜奢謂眾曰。",
    "X85n1594_012:0576b13_10": "汝等識此來者耶。",
    "X85n1594_012:0576b13_11": "佛記。",
    "X85n1594_012:0576b13_12": "聖者馬鳴紹吾法者也。",
    "X85n1594_012:0576b14_13": "於是馬鳴致禮問曰。",
    "X85n1594_012:0576b14_14": "我欲識佛。",
    "X85n1594_012:0576b14_15": "何者即是。",
    "X85n1594_012:0576b15_16": "夜奢曰。",
    "X85n1594_012:0576b15_17": "汝欲識佛。",
    "X85n1594_012:0576b15_18": "不識者是。",
    "X85n1594_012:0576b15_19": "馬鳴曰。",
    "X85n1594_012:0576b15_20": "佛既不識焉知是乎。",
    "X85n1594_012:0576b16_21": "夜奢曰。",
    "X85n1594_012:0576b16_22": "既不識佛。",
    "X85n1594_012:0576b16_23": "焉知不是。",
    "X85n1594_012:0576b16_24": "馬鳴曰。",
    "X85n1594_012:0576b16_25": "此是鋸義。",
    "X85n1594_012:0576b17_26": "夜奢曰。",
    "X85n1594_012:0576b17_27": "彼是木義。",
    "X85n1594_012:0576b17_28": "乃問鋸義者何。",
    "X85n1594_012:0576b17_29": "曰與師平出。",
    "X85n1594_012:0576b18_0": "馬鳴却問木義者何。",
    "X85n1594_012:0576b18_1": "曰汝被我解。",
    "X85n1594_012:0576b18_2": "馬鳴豁然省悟。",
    "X85n1594_012:0576b18_3": "遂求剃度。",
    "X85n1594_012:0576b19_4": "夜奢謂眾曰。",
    "X85n1594_012:0576b19_5": "此大士者。",
    "X85n1594_012:0576b19_6": "昔為毗舍利國王。",
    "X85n1594_012:0576b19_7": "以其國有一類裸人。",
    "X85n1594_012:0576b20_8": "如馬裸露。",
    "X85n1594_012:0576b20_9": "王運神通。",
    "X85n1594_012:0576b20_10": "分身為蠶。",
    "X85n1594_012:0576b20_11": "彼乃得衣。",
    "X85n1594_012:0576b21_12": "後復生中印度。",
    "X85n1594_012:0576b21_13": "馬人感戀悲鳴。",
    "X85n1594_012:0576b21_14": "故號馬鳴。",
    "X85n1594_012:0576b21_15": "如來懸記。",
    "X85n1594_012:0576b22_16": "滅度後六百年。",
    "X85n1594_012:0576b22_17": "馬鳴當於波羅柰國。",
    "X85n1594_012:0576b22_18": "摧伏異道。",
    "X85n1594_012:0576b23_19": "繼吾傳化。",
    "X85n1594_012:0576b23_20": "今正是時。",
    "X85n1594_012:0576b23_21": "遂告之曰。",
    "X85n1594_012:0576b23_22": "如來大法眼藏。",
    "X85n1594_012:0576b23_23": "今付於汝。",
    "X85n1594_012:0576b24_24": "即說偈曰。",
    "X85n1594_012:0576b24_25": "迷悟如隱顯。",
    "X85n1594_012:0576b24_26": "明暗不相離。",
    "X85n1594_012:0576b24_27": "今付隱顯法。",
    "X85n1594_012:0576c01_28": "非一亦非二。",
    "X85n1594_012:0576c01_29": "付法已。",
    "X85n1594_012:0576c01_30": "即現神變。",
    "X85n1594_012:0576c01_31": "湛然圓寂。",
    "X85n1594_012:0576c01_32": "眾興寶塔。",
    "X85n1594_012:0576c02_33": "以閟全身。",
    "X85n1594_012:0576c02_34": "當此土周安王十九年戊戌歲也○宗鏡錄云。",
    "X85n1594_012:0576c03_35": "西天韻陀山中。",
    "X85n1594_012:0576c03_36": "有一羅漢。",
    "X85n1594_012:0576c03_37": "名富樓那。",
    "X85n1594_012:0576c03_38": "馬鳴往見。",
    "X85n1594_012:0576c04_39": "端坐林中。",
    "X85n1594_012:0576c04_40": "志氣渺然。",
    "X85n1594_012:0576c04_41": "若不可測。",
    "X85n1594_012:0576c04_42": "馬鳴語之曰。",
    "X85n1594_012:0576c04_43": "沙門說之。",
    "X85n1594_012:0576c05_44": "敢有所明。",
    "X85n1594_012:0576c05_45": "要必屈汝。",
    "X85n1594_012:0576c05_46": "我若不勝。",
    "X85n1594_012:0576c05_47": "刎頸以謝。",
    "X85n1594_012:0576c05_48": "羅漢默然。",
    "X85n1594_012:0576c06_49": "容無負色。",
    "X85n1594_012:0576c06_50": "亦無勝顏。",
    "X85n1594_012:0576c06_51": "扣之數四。",
    "X85n1594_012:0576c06_52": "曾無應情。",
    "X85n1594_012:0576c06_53": "鳴退自思惟。",
    "X85n1594_012:0576c07_54": "我負矣。",
    "X85n1594_012:0576c07_55": "彼勝矣。",
    "X85n1594_012:0576c07_56": "彼安無言。",
    "X85n1594_012:0576c07_57": "故無可屈。",
    "X85n1594_012:0576c07_58": "吾以言之。",
    "X85n1594_012:0576c08_59": "雖如言有可屈。",
    "X85n1594_012:0576c08_60": "自吾未免於言。",
    "X85n1594_012:0576c08_61": "真可媿矣。",
    "X85n1594_012:0576c08_62": "遂投出家。",
    "X85n1594_012:0576c09_63": "此說與傳燈不同。",
    "X85n1594_012:0576c09_64": "并識之。",
    "X85n1594_012:0576c11_0": "佛祖綱目卷第十二"
}