[
    {
        "source_sentence": "金剛頂瑜伽護摩儀軌",
        "from": "T18n0909_001:0920b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特進試鴻臚卿大興善寺三藏沙門",
        "from": "T18n0909_001:0920b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大廣智不空奉　詔譯",
        "from": "T18n0909_001:0920b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說護摩，　　由此速成就，",
        "from": "T18n0909_001:0920b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由護摩業儀，　　相應不間斷。",
        "from": "T18n0909_001:0920b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切事，　　隨明當應作，",
        "from": "T18n0909_001:0920b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨類作護摩，　　無上成就業。",
        "from": "T18n0909_001:0920b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩說多種，　　略說有五種，",
        "from": "T18n0909_001:0920b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣說大瑜伽，　　於祕密教說。",
        "from": "T18n0909_001:0920c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今則略說，　　持明之遊戲，",
        "from": "T18n0909_001:0920c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由護摩儀軌，　　成就於族壇。",
        "from": "T18n0909_001:0920c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩五種事，　　一一有多種，",
        "from": "T18n0909_001:0920c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災及增益，　　第三為降伏，",
        "from": "T18n0909_001:0920c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召為第四，　　第五是敬愛，",
        "from": "T18n0909_001:0920c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五護摩，　　敬愛為最勝。",
        "from": "T18n0909_001:0920c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說軍荼，　　依瑜伽相應，",
        "from": "T18n0909_001:0920c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災爐正圓，　　應當如是作，",
        "from": "T18n0909_001:0920c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益應正方，　　三角作降伏；",
        "from": "T18n0909_001:0920c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛形軍荼，　　鉤召為最勝，",
        "from": "T18n0909_001:0920c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長作蓮華形，　　敬愛為相應。",
        "from": "T18n0909_001:0920c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已說五種類，　　軍荼業無上，",
        "from": "T18n0909_001:0921a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災初夜起，　　增益初日分，",
        "from": "T18n0909_001:0921a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中日分應作，　　降伏猛利法，",
        "from": "T18n0909_001:0921a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召一切時，　　後夜作敬愛，",
        "from": "T18n0909_001:0921a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五瑜伽，　　作業為等引。",
        "from": "T18n0909_001:0921a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面北作息災，　　增益向東方，",
        "from": "T18n0909_001:0921a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應面南而住，　　以作降伏事。",
        "from": "T18n0909_001:0921a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰視遍諸方，　　是為鉤召儀，",
        "from": "T18n0909_001:0921a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若敬愛相應，　　應住面向西。",
        "from": "T18n0909_001:0921a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災結佛印，　　增益寶標幟，",
        "from": "T18n0909_001:0921a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛怒降伏，　　金剛鉤鉤召。",
        "from": "T18n0909_001:0921a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大召而相應，　　敬愛蓮華部，",
        "from": "T18n0909_001:0921a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五瑜伽，　　應作護摩事。",
        "from": "T18n0909_001:0921a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災燒甘木，　　增益用菓木，",
        "from": "T18n0909_001:0921a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦木降伏業，　　刺木為鉤召，",
        "from": "T18n0909_001:0921a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花木說敬愛，　　如是五種木，",
        "from": "T18n0909_001:0921a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑜伽者應用。",
        "from": "T18n0909_001:0921a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　息災爐作輪，增益三股杵，　　降伏一股杵。",
        "from": "T18n0909_001:0921a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召應作鉤，　　敬愛作蓮華，",
        "from": "T18n0909_001:0921a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災爐應量，　　橫全竪半肘，",
        "from": "T18n0909_001:0921a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益兩肘量，　　深量應用半。",
        "from": "T18n0909_001:0921a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏軍荼相，　　三角各一肘，",
        "from": "T18n0909_001:0921a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召長一肘，　　橫深各減半，",
        "from": "T18n0909_001:0921a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛亦一肘，　　橫深如鉤召。",
        "from": "T18n0909_001:0921a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五種軍荼壇，　　應畫作三重，",
        "from": "T18n0909_001:0921a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中院羯磨杵，　　四隅畫蓮華；",
        "from": "T18n0909_001:0921a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二院四契，　　謂四波羅蜜，",
        "from": "T18n0909_001:0921a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隅內供養；",
        "from": "T18n0909_001:0921a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八方天眷屬，　　四隅於四門，",
        "from": "T18n0909_001:0921a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外供養四攝，　　中安遍照尊，",
        "from": "T18n0909_001:0921b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此息災軍荼，　　餘四軍荼相，",
        "from": "T18n0909_001:0921b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三院皆如是。",
        "from": "T18n0909_001:0921b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　增益於中院，應畫羯磨寶；",
        "from": "T18n0909_001:0921b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　第二院應畫，寶生佛眷屬；",
        "from": "T18n0909_001:0921b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　第三院及門，亦如前所說。",
        "from": "T18n0909_001:0921b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　降伏於中院，獨股羯磨杵，　　四隅畫蓮華；",
        "from": "T18n0909_001:0921b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二院應畫，　　降三世眷屬，",
        "from": "T18n0909_001:0921b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種忿怒相；",
        "from": "T18n0909_001:0921b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　第三院及門，亦如前所說，　　而皆忿怒相。",
        "from": "T18n0909_001:0921b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召於中院，　　應畫金剛鉤，",
        "from": "T18n0909_001:0921b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隅畫蓮華；",
        "from": "T18n0909_001:0921b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　第二院應畫，不動佛眷屬；",
        "from": "T18n0909_001:0921b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　第三院四隅，八方及四門，　　如初軍荼知。",
        "from": "T18n0909_001:0921b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛於中院，　　畫蓮華羯磨，",
        "from": "T18n0909_001:0921b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隅三股杵；",
        "from": "T18n0909_001:0921b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　第二院應畫，無量壽眷屬，　　應畫四種尊；",
        "from": "T18n0909_001:0921b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三院四隅，　　八方及四門，",
        "from": "T18n0909_001:0921b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說亦如前。",
        "from": "T18n0909_001:0921b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　此是五護摩，瑜伽經所說，　　修行者應知。",
        "from": "T18n0909_001:0921b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其爐緣高兩指闊四指，緣內爐口本地闊兩指，於中契印高兩指，其爐近身開竪項，闊四指長兩指，次闊十指長四指，次作蓮華形令大小相稱，從竪項至葉末都十二指，高下並與緣齊，五種爐並同。",
        "from": "T18n0909_001:0921b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其治地如大曼荼羅法。",
        "from": "T18n0909_001:0921b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掘地持鍬等印，金剛縛竪禪智進力，並真言二十一遍。",
        "from": "T18n0909_001:0921b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0921b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄖫儞􄑌佉􄖩那􄙖嚩􈂼蘇上􄕵提􅁥婆嚩二合引􄚩訶引」加持泥及瞿摩夷塗香等印，二手合掌屈進力戒方二節相合，禪智並竪，去進力如口形，真言二十一遍。",
        "from": "T18n0909_001:0921c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0921c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿅阿􇩸蜜哩二合􄕛都􆹊納婆二合􄙖嚩􆿁吽􄗁發􈁆吒􅁥娑嚩二合􄚩訶引」加持五色粉印及真言，並如瑜伽經所說。",
        "from": "T18n0909_001:0921c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持蘇、蜜、酪、乳及木、五種穀、香、華等，並以金剛羯磨菩薩真言，各各加持七遍，印二手各以禪智捻戒方甲，餘三度開竪如金剛杵形，即相交右押左。",
        "from": "T18n0909_001:0921c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0921c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄦽日羅二合􄑀羯􈆺磨􄑊撿平引」所燒護摩枝皆安右邊、蘇於蓮葉臺上，蜜、酪、乳、飯糜近爐右邊安，左邊應置二香水器，其器金銀、熟銅、白瓷、商佉並通用，香白檀香、欝金、龍腦等，二器一用灑火及供養物等，一用聖眾火天漱口。",
        "from": "T18n0909_001:0921c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑淨印，禪捻檀甲，三度竪開。",
        "from": "T18n0909_001:0921c19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0921c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿅阿􇩸蜜哩二合􄕝諦􆿁吽􄗁發􈁆吒」漱口印，右手金剛拳舒進度，攪水加持七遍訖，右手作掬抄水，垂手向身右旋灑火。",
        "from": "T18n0909_001:0921c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0921c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄗽囉􄕯娜􄙖嚩􄦽日囉二合􈊥曇」息災本尊火天，及爐、衣服、飯食、花皆用白，作吉祥坐，兩脚交竪膝右押左，與慈心相應。",
        "from": "T18n0909_001:0921c29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益皆用黃，全跏坐。",
        "from": "T18n0909_001:0922a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏皆用黑，蹲踞坐，以左足大指而履右足大指甲上。",
        "from": "T18n0909_001:0922a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召皆用赤，半跏坐。",
        "from": "T18n0909_001:0922a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛同鉤召色，賢坐跂物垂脚坐。",
        "from": "T18n0909_001:0922a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎請，從三昧耶至迎請皆依本法，或隨五種護摩，隨部部主五相成身。",
        "from": "T18n0909_001:0922a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎請已誦讚歎以四攝安立聖眾，圍繞爐壇，然後獻閼伽，各結本羯磨印安立，示本三昧耶，誦護摩真言一百八遍，然後取一花，以火天真言加持三遍或七遍擲火中，然後結火天印，以左手握右手腕，右手舒掌向外，屈禪度撗在掌中，進度如鉤來去。",
        "from": "T18n0909_001:0922a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "招、獻已，以禪度捻進度，即成發遣。",
        "from": "T18n0909_001:0922a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0922a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿏翳􈂯呬􆿏翳􄚪呬􄗥摩􄚩訶􄗞部􄕗多􄕵泥上􄙖嚩􄙀哩􄙼使􄾭儞尾二合􄒶惹􄙺薩􄕗哆􄗥摩􈃈孽哩二合􄙺呬􇧹怛嚩二合􈂪虎􄕝諦􄗥摩􄚩訶􄙊羅􄗥摩􈊲悉泥平􄙺珊􄖫儞􄕛都􄗙波􄙖嚩􆿅阿􅍉哦那二合􄗷曳􄚩呵􄢾微也二合􄚨迦􄢾微也二合􄕯娜􄚨訶􄕯娜􄗱耶􅁥娑嚩二合引􄚩訶引」迎已以香水三灑、三漱口，然後用本真言，以大杓酌滿三杓蘇投火，想投火天口中至於心蓮華。",
        "from": "T18n0909_001:0922a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0922a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿅阿􅍉哦那二合􄗷曳􅁥娑嚩二合引􄚩訶引加持亦用此」即以此真言小杓三投蜜酪乳及木乃至香花等，想火天四臂，右手無畏，第二手持珠，左手仙杖，第二手執軍持，想從心遍身中流出無量塗香雲、花雲、燒香雲，飲食燈明種種供養，供養一切佛、菩薩、緣覺、聲聞及一切世天。",
        "from": "T18n0909_001:0922b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於火天真言「娑嚩訶」上，稱所求事投之。",
        "from": "T18n0909_001:0922b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後以大杓三滿杓供養，加持一花置本方坐處，請出爐還本座，然後三淨火，以四字明迎請佛菩薩，各坐本座。",
        "from": "T18n0909_001:0922b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三獻漱口，以三大杓滿杓獻，然後以小杓三酌蜜酪乳糜酪飯及木五穀香花等各三投，想投聖尊口中至心。",
        "from": "T18n0909_001:0922b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若息災法，五穀中須十倍加油麻，木用百八或五十四或二十一。",
        "from": "T18n0909_001:0922b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0922b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙺薩􅞣嚩􄖶播引􄖵婆􄕯娜􄚩訶􄖩那􄙖嚩􄦽日囉二合􄗱耶􅁥娑嚩二合引􄚩訶引」或有教中說，用部母為息災，或本尊真言或毘盧遮那真言，皆「娑嚩訶」上為自他願除一切災。",
        "from": "T18n0909_001:0922b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心專注於爐中聖眾，想聖眾皆從心外遍身毛孔流出供養雲海，至無邊世界供養一切佛，及除一切三惡趣苦惱。",
        "from": "T18n0909_001:0922b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩已，以滿三杓獻聖眾，所殘五穀香花等，聚一器中獻十方世天。",
        "from": "T18n0909_001:0922b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作增益，先如前迎請火天，即獻聖眾三大杓并木香花等燒粳米。",
        "from": "T18n0909_001:0922b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲延命燒屈蔞草，其延命爐如前增益，爐外作甲冑形，其粳米、屈蔞草比餘物挍十倍多。",
        "from": "T18n0909_001:0922b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益真言曰：",
        "from": "T18n0909_001:0922b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄦽日囉二合􄖹補􆵋瑟吒二合􄗷曳平􅁥娑嚩二合引􄚩訶引」延命真言曰：",
        "from": "T18n0909_001:0922c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄦽日囉二合􄗵喻􄙵曬􅁥娑嚩二合引􄚩訶引」於「娑嚩訶」上加心中所願之語。",
        "from": "T18n0909_001:0922c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心專注於爐中聖眾，想從聖眾心外遍身毛孔中流出供養雲海，至無邊世界供養一切佛菩薩，及照觸一切有情六道四生，皆獲榮盛富貴延命。",
        "from": "T18n0909_001:0922c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以此光明，想自宅中雨七寶及所資用物，又想天甘露灌注自我遍於毛孔。",
        "from": "T18n0909_001:0922c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作降伏，先如前迎請火天，用蔓菁或芥子油或水牛蘇，或用嚕地囉，先獻聖眾三大杓已，用無香花或臭花、安悉香、鹽、毒藥等，或唯用鐵末，或作麼努曬前人形，段段截投之。",
        "from": "T18n0909_001:0922c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投火天時，想從火天心外遍身中流出器杖投彼人上，想火天及本尊皆作忿怒形。",
        "from": "T18n0909_001:0922c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0922c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􆿁吽􄙖嚩􄦽日羅二合􄙺薩􄽙怛嚩二合􄗱耶􄗁發􈁆吒」於「發吒」上加彼人名。",
        "from": "T18n0909_001:0922c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或用本法、或用不動尊、或降三世、或文殊師利六足尊等真言，想忿怒尊身中流出器杖雲海，供養盡虛空一切忿怒尊，即此器杖落彼家及身上。",
        "from": "T18n0909_001:0922c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作鉤召皆如增益，唯花用有刺木赤花，或用本法中所燒物。",
        "from": "T18n0909_001:0922c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0922c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􆿁吽􄙖嚩􄦽日羅二合􄑀羯􅞻哩灑二合􄗱耶􄓁弱」於「弱」上加彼人名。",
        "from": "T18n0909_001:0922c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想從本尊心外遍身流出無量金剛鉤，供養盡虛空一切佛賢聖，即以此眾鉤鉤召三惡趣有情，安置人天善處，即以此眾鉤入彼人心召來。",
        "from": "T18n0909_001:0923a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作敬愛法，竝同上，唯花用赤色花，或用本法中所用物。",
        "from": "T18n0909_001:0923a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0923a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􆿁吽􄙖嚩􄦽日羅二合􄙜吠􄙢捨􄗱野􄓁弱」於「弱」上加彼人名。",
        "from": "T18n0909_001:0923a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想從本尊身中流出花箭，遍無量世界，供養一切佛賢聖，及射緣覺聲聞厭離心，及六道四生互憎恚心，即以此眾箭射彼人五處，所謂額、兩乳、心及下分謂隱密處。",
        "from": "T18n0909_001:0923a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說三摩波多法，安所成物於蘇器前，或物大即安於左右邊，隨便處。",
        "from": "T18n0909_001:0923a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人身、蘇器、盛物、爐、聖眾，如是五集應巡環次第安立，取小杓滿杓蘇加於所盛物上，誦真言至「娑縛二合訶」字，即舉杓投火，與「訶」聲俱下，便長引「訶」聲令杓却至物上，「訶」聲方絕。",
        "from": "T18n0909_001:0923a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如加持人，即安杓頭上。",
        "from": "T18n0909_001:0923a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若用本尊真言無「娑縛二合訶」字者，當加而誦。",
        "from": "T18n0909_001:0923a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遙加持人，或抄名或著前人衣，標心而加持。",
        "from": "T18n0909_001:0923a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無蘇，即用乳亦得。",
        "from": "T18n0909_001:0923a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養了，用大杓滿杓三獻聖眾，并三灑三漱，取小杓誦滅惡趣真言，為一切有情護摩七遍或二十一遍，心奉送聖眾還本座。",
        "from": "T18n0909_001:0923a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以四字明引十方世天入爐中，依前灑漱，即以所殘香花蘇蜜等投，各誦本真言一遍或三遍，各於「娑嚩訶」上加所求事，即結聖眾羯磨及三昧耶契，誦讚歎、發願，結降三世印左旋解界，即奉送如念誦法。",
        "from": "T18n0909_001:0923a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即出道場外，於道場八隅敷茅草或蓮葉或餘青草，或塗圓壇為十位，於東方帝釋左右置梵天地天，若道場內無置處，即於道場前別為方界，即於中作八方，於中作兩位置梵天地天。",
        "from": "T18n0909_001:0923b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方帝釋，乘白象住五色雲中，身作金色，右手持三股當心，左手托左𦜮，左脚垂下。",
        "from": "T18n0909_001:0923b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三天女各手持蓮華，盤盛青蓮華，或以盤盛雜華等。",
        "from": "T18n0909_001:0923b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0923b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􆿇印􈁋捺囉二合􄗱耶􅁥娑嚩二合􄚩訶引」東南方火天，乘青羊，赤肉色，遍身火焰，右二手，一持青竹、一持軍持，左二手，一揚掌、一持念珠。",
        "from": "T18n0909_001:0923b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二天女持天花。",
        "from": "T18n0909_001:0923b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左右置苦行仙，垂左脚蹉右足。",
        "from": "T18n0909_001:0923b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0923b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􆿅阿􅍉哦那二合􄗷曳􅁥娑嚩二合􄚩訶」南方焰魔天，乘水牛，右手執人頭幢，左手仰掌——有二天女侍，二鬼使者持刀持戟——赤黑色，垂右脚。",
        "from": "T18n0909_001:0923b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0923b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􄗻焰􄗥摩􄗱耶􇩉娑嚩二合􄚩訶」西南方羅剎主天，乘白師子身著甲冑，右手持刀令竪，左手大指押中小二指，赤肉白。",
        "from": "T18n0909_001:0923b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二天女侍左右，二羅剎鬼持三股戟。",
        "from": "T18n0909_001:0923b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0923b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􄩹乃哩二合􄟞底曳二合􅁥娑嚩二合􄚩訶」西方水天，住於水中乘龜，淺綠色，右手執刀，左手持龍索，頭冠上有五龍。",
        "from": "T18n0909_001:0923c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四天女持妙華。",
        "from": "T18n0909_001:0923c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0923c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􄙖縛􄙂嚕􄕋拏􄗱野􅁥娑嚩二合􄚩訶」西北方風天，雲中乘麞著甲冑，左手托𦜮，右手執獨股頭創，創上有緋幡。",
        "from": "T18n0909_001:0923c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二天女侍之，并藥叉眾。",
        "from": "T18n0909_001:0923c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0923c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􄙖嚩􄗱耶􄙜吠微先反􅁥娑嚩二合􄚩訶」北方毘沙門天，坐二鬼上身著甲冑，左手掌捧塔，右手執寶棒，身金色。",
        "from": "T18n0909_001:0923c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二天女持寶華等。",
        "from": "T18n0909_001:0923c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0923c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􄙝吠􈃡室囉二合􄙖嚩􄕋拏􄗱野􅁥娑嚩二合􄚩訶」東北方伊舍那天，舊云摩醯首羅天，亦云大自在天，乘黃豐牛，左手持劫波坏盛血，右手持三戟創，淺青肉色，三目忿怒，二牙上出，髑髏為瓔珞，頭冠中有二仰月。",
        "from": "T18n0909_001:0923c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二天女持花。",
        "from": "T18n0909_001:0923c29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0909_001:0924a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􆿇伊􄙢舍􄖩那􄗱耶􅁥娑嚩二合􄚩訶」上方梵天真言曰：",
        "from": "T18n0909_001:0924a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􄭑沒囉二合􈃋𭙞敢心反摩二合􄖯寧尼奚反􅁥娑嚩二合􄚩訶」中心置四臂不動尊，青肉色，二手各別作金剛拳，頭指小指各曲如鉤形，安口兩角想如牙，右手持刀令竪，左手持索，半跏右押左坐盤石上，威焰光明遍身如火。",
        "from": "T18n0909_001:0924a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下方地天真言曰：",
        "from": "T18n0909_001:0924a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧹馱􈁀南􄩸畢哩二合􄓜體地以反􄣅微曳二合􅁥娑嚩二合􄚩賀」十方天供養雜粥，所謂粳米油麻菉豆相和煮，盛一器中，每座置淨葉，先以淨瓶盛香水，寫少許置葉上獻，次塗香以指彈獻，次花燒香，次樂。",
        "from": "T18n0909_001:0924a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一杓粥，各以本真言加持三遍，即用小蠟燭或紙燭便插粥上，其燭作意令獻，未遍來不得令滅，於「娑嚩二合訶」上加所求願語。",
        "from": "T18n0909_001:0924a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七曜真言曰：",
        "from": "T18n0909_001:0924a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􈁀孽囉二合􄑆醯􈂫濕嚩二合􄙀哩􄗱耶􄪼鉢囉二合􄖵跛􄕗哆􄝝而渝二合􄕙底丁以反􄗽羅􄗥摩􄗱耶􅁥娑嚩二合􄚩訶引」二十八宿真言曰：",
        "from": "T18n0909_001:0924b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩南􄗰莫􄙺三􄗥漫􆩖多􈎭沒􇧺馱􈁀南􄖩諾􄚴乞灑二合􄩞怛囉二合􈇇濕寧吉反􄒾儒􄖩那􄖫儞􄗷曳􅁥娑嚩二合􄚩訶」於八方中兩位與上下天相對，諸獻竝同，若別有所願獨用亦得。",
        "from": "T18n0909_001:0924b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若護摩壇中，各依方標心令住。",
        "from": "T18n0909_001:0924b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今次應說，　　注杓寫杓相，",
        "from": "T18n0909_001:0924b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此作成就，　　持誦者速獲。",
        "from": "T18n0909_001:0924b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "注杓一肘量，　　佉木令堅密，",
        "from": "T18n0909_001:0924b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無孔穴應作，　　口應妙端嚴，",
        "from": "T18n0909_001:0924b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闊狹四指量，　　深當用一指，",
        "from": "T18n0909_001:0924b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如吉祥子相。",
        "from": "T18n0909_001:0924b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應作妙端嚴，　　麁應足一把，",
        "from": "T18n0909_001:0924b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫杓一肘量。",
        "from": "T18n0909_001:0924b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　木如前所說，或佉陀羅木。",
        "from": "T18n0909_001:0924b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深量應半之，　　於中作蓮華，",
        "from": "T18n0909_001:0924b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦用金剛杵。",
        "from": "T18n0909_001:0924b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如是大仙說，求悉地應作，　　護摩速成就。",
        "from": "T18n0909_001:0924b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛頂瑜伽護摩儀軌《八家祕錄》云：",
        "from": "T18n0909_001:0924b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「金剛頂瑜伽護摩儀軌一卷，不空譯　貞元新入目錄海仁運珍。",
        "from": "T18n0909_001:0924c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩儀軌一卷　師子國三藏沙門阿目伽跋折羅譯，奉勅改名智藏　叡與前稍廣。",
        "from": "T18n0909_001:0924c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」後智藏譯既在明藏，然彼有爛脫，無八天形像；",
        "from": "T18n0909_001:0924c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即不然。",
        "from": "T18n0909_001:0924c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又文有具略，存兩本可也。",
        "from": "T18n0909_001:0924c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故依寶曆六丙子年野山妙瑞師於東寺四本校正之本，更校小池坊經庫康和五年之本，壽梓，時享和改元辛酉年五月，豐山偶居沙門　快道誌。",
        "from": "T18n0909_001:0924c09_12",
        "context_with_next_sentence": true
    }
]