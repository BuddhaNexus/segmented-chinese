[
    {
        "source_sentence": "百千印陀羅尼經",
        "from": "T21n1369b_001:0886a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐于闐三藏實叉難陀譯",
        "from": "T21n1369b_001:0886a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛在王舍城耆闍崛山中。與",
        "from": "T21n1369b_001:0886a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大比丘眾及無量菩薩俱。",
        "from": "T21n1369b_001:0886a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告諸比丘有陀羅尼名百千印。",
        "from": "T21n1369b_001:0886a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當共受持。",
        "from": "T21n1369b_001:0886a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪時。",
        "from": "T21n1369b_001:0886a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應先歸命金色廣顏光明幢佛。",
        "from": "T21n1369b_001:0886a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟尼佛。",
        "from": "T21n1369b_001:0886a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說根本陀羅尼曰。",
        "from": "T21n1369b_001:0886a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛姪他一唵引聲二菩提菩提菩提菩提三薩婆怛他揭多瞿折囉四馱囉馱囉五訶囉訶囉六鉢囉呵囉鉢囉呵囉七莫訶菩提質多八注盧注盧九設多曷審彌珊招地低十薩婆怛他揭多地瑟他長聲阿毘瑟低十一具儜具那鉢底十二勃陀具那婆娑下去嘶十三蔑囇蔑囇十四伽伽那怛囇十五薩婆怛他揭多地瑟恥低那婆薩怛囇十六睒摩睒摩十七鉢囉睒摩鉢囉睒摩十八薩婆播波鉢囉睒摩寧十九薩婆播波毘戍達寧二十虎盧虎盧菩提末伽三鉢囉嘶替低二十一薩婆怛他揭多鉢囉底瑟恥多戍提薩婆訶二十二爾時世尊。",
        "from": "T21n1369b_001:0886b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為大眾說心呪曰。",
        "from": "T21n1369b_001:0886b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一薩婆怛他揭多吠婆盧吉帝二社耶社耶薩婆訶三爾時世尊。",
        "from": "T21n1369b_001:0886b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復更宣說隨心呪曰。",
        "from": "T21n1369b_001:0886b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵虎嚧虎嚧一𮁞耶目磎薩婆訶二若有比丘比丘尼優婆塞優婆夷及餘淨信善男女等造塔之時。",
        "from": "T21n1369b_001:0886b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此陀羅尼句置於塔中。",
        "from": "T21n1369b_001:0886b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便得具足造百千塔殊勝功德無異。",
        "from": "T21n1369b_001:0886b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸比丘天龍八部一切眾會。",
        "from": "T21n1369b_001:0886b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說歡喜奉行。",
        "from": "T21n1369b_001:0886b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千印陀羅尼經",
        "from": "T21n1369b_001:0886b16_100",
        "context_with_next_sentence": false
    }
]