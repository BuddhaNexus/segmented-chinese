{
    "X72n1435_031:0361a18_0": "無異禪師廣錄卷第三十一",
    "X72n1435_031:0361a20_0": "住博山法孫　弘瀚　彚編",
    "X72n1435_031:0361a21_0": "首座法孫　弘裕　同集",
    "X72n1435_031:0361a22_0": "啟",
    "X72n1435_031:0361a23_0": "復何菲莪大司寇",
    "X72n1435_031:0361a24_0": "插草諭誠。",
    "X72n1435_031:0361a24_1": "大地無過。",
    "X72n1435_031:0361a24_2": "嶺表芳塵聯接。",
    "X72n1435_031:0361a24_3": "中天獨讓閩南。",
    "X72n1435_031:0361b01_0": "標佛國名。",
    "X72n1435_031:0361b01_1": "從來有種。",
    "X72n1435_031:0361b01_2": "續祖燈燄。",
    "X72n1435_031:0361b01_3": "光亘無窮。",
    "X72n1435_031:0361b01_4": "恭惟閣下。",
    "X72n1435_031:0361b02_0": "揭露衣珠。",
    "X72n1435_031:0361b02_1": "重披慧鏡。",
    "X72n1435_031:0361b02_2": "現宰官而為領袖。",
    "X72n1435_031:0361b02_3": "作地主以衛金湯。",
    "X72n1435_031:0361b03_4": "頴悟于雷。",
    "X72n1435_031:0361b03_5": "不驚于虎。",
    "X72n1435_031:0361b03_6": "誰過楊李之門。",
    "X72n1435_031:0361b03_7": "碑文刻白字。",
    "X72n1435_031:0361b04_8": "敢曰慈明之謁。",
    "X72n1435_031:0361b04_9": "當道種青松。",
    "X72n1435_031:0361b04_10": "弄雪嶺靈蛇。",
    "X72n1435_031:0361b04_11": "聽偃溪浚水。",
    "X72n1435_031:0361b05_12": "生擒活捉。",
    "X72n1435_031:0361b05_13": "僧俗不分。",
    "X72n1435_031:0361b05_14": "果熟香飄。",
    "X72n1435_031:0361b05_15": "聖凡一揆。",
    "X72n1435_031:0361b05_16": "某挂錫巖阿。",
    "X72n1435_031:0361b06_17": "不循情于蠟屐。",
    "X72n1435_031:0361b06_18": "載舟山水。",
    "X72n1435_031:0361b06_19": "愧拭涕于泥封。",
    "X72n1435_031:0361b06_20": "速度嶺以規僧林。",
    "X72n1435_031:0361b07_21": "敢跨舷而登祖席。",
    "X72n1435_031:0361b07_22": "輙辭高誼。",
    "X72n1435_031:0361b07_23": "希鑑愚情。",
    "X72n1435_031:0361b09_0": "復張中丞",
    "X72n1435_031:0361b10_0": "寶樹吐煙。",
    "X72n1435_031:0361b10_1": "熏戒香于遍野。",
    "X72n1435_031:0361b10_2": "慈門返照。",
    "X72n1435_031:0361b10_3": "麗慧日于中天。",
    "X72n1435_031:0361b11_0": "乘一極悲心。",
    "X72n1435_031:0361b11_1": "慶多生願力。",
    "X72n1435_031:0361b11_2": "恭惟閣下。",
    "X72n1435_031:0361b11_3": "付囑靈山。",
    "X72n1435_031:0361b11_4": "範圍塵世。",
    "X72n1435_031:0361b12_5": "嗅木樨而無隱。",
    "X72n1435_031:0361b12_6": "晦堂活句驚人。",
    "X72n1435_031:0361b12_7": "悟物格以致知。",
    "X72n1435_031:0361b13_0": "妙喜微言在耳。",
    "X72n1435_031:0361b13_1": "古既如是。",
    "X72n1435_031:0361b13_2": "今胡不然。",
    "X72n1435_031:0361b13_3": "徹萬劫因緣。",
    "X72n1435_031:0361b13_4": "成一時佛事。",
    "X72n1435_031:0361b14_5": "攪長河酥酪。",
    "X72n1435_031:0361b14_6": "還他淨梵天人。",
    "X72n1435_031:0361b14_7": "變大地黃金。",
    "X72n1435_031:0361b15_0": "須是達多長者。",
    "X72n1435_031:0361b15_1": "某惟圖溫飽。",
    "X72n1435_031:0361b15_2": "山門底事不知。",
    "X72n1435_031:0361b15_3": "久脫世緣。",
    "X72n1435_031:0361b16_4": "物外煙霞頗適。",
    "X72n1435_031:0361b16_5": "頃承翰教。",
    "X72n1435_031:0361b16_6": "進止徬徨。",
    "X72n1435_031:0361b16_7": "愧不暇于羈延。",
    "X72n1435_031:0361b17_8": "實有違于台命。",
    "X72n1435_031:0361b18_0": "復黃孝廉",
    "X72n1435_031:0361b19_0": "福地珠林。",
    "X72n1435_031:0361b19_1": "藉縉紳而興寶社。",
    "X72n1435_031:0361b19_2": "泉南佛國。",
    "X72n1435_031:0361b19_3": "仗緇素以扇慈風。",
    "X72n1435_031:0361b20_4": "發蘭若真乘。",
    "X72n1435_031:0361b20_5": "結菩提善願。",
    "X72n1435_031:0361b20_6": "恭惟門下。",
    "X72n1435_031:0361b20_7": "儒門砥柱。",
    "X72n1435_031:0361b21_0": "法塹金湯。",
    "X72n1435_031:0361b21_1": "揭壁上高僧。",
    "X72n1435_031:0361b21_2": "點塵中俗眼。",
    "X72n1435_031:0361b21_3": "一呼而應。",
    "X72n1435_031:0361b21_4": "從來聲裏有人。",
    "X72n1435_031:0361b22_5": "再犯不容。",
    "X72n1435_031:0361b22_6": "那箇衣中無寶。",
    "X72n1435_031:0361b22_7": "駕三車誘諸子。",
    "X72n1435_031:0361b23_0": "頓轡白牛。",
    "X72n1435_031:0361b23_1": "具四攝化同流。",
    "X72n1435_031:0361b23_2": "高標赤幟。",
    "X72n1435_031:0361b23_3": "象龍蹴蹋。",
    "X72n1435_031:0361b23_4": "凡聖通融。",
    "X72n1435_031:0361b24_5": "(某)素躭丘壑。",
    "X72n1435_031:0361b24_6": "不諳市廛。",
    "X72n1435_031:0361b24_7": "硜硜惟拾枯柴。",
    "X72n1435_031:0361b24_8": "熠熠難調野馬。",
    "X72n1435_031:0361c01_9": "度嶺之期已定。",
    "X72n1435_031:0361c01_10": "搖空之錫不回。",
    "X72n1435_031:0361c01_11": "慈命斯違。",
    "X72n1435_031:0361c01_12": "通身汗下。",
    "X72n1435_031:0361c03_0": "復",
    "X72n1435_031:0361c04_0": "金繩界道。",
    "X72n1435_031:0361c04_1": "蓮開八德之池。",
    "X72n1435_031:0361c04_2": "寶網舒光。",
    "X72n1435_031:0361c04_3": "樂響七重之樹。",
    "X72n1435_031:0361c05_0": "儒釋慶多佛國。",
    "X72n1435_031:0361c05_1": "人天交集珠林。",
    "X72n1435_031:0361c05_2": "恭惟臺下。",
    "X72n1435_031:0361c05_3": "半偈心空。",
    "X72n1435_031:0361c06_0": "三生緣遇。",
    "X72n1435_031:0361c06_1": "聞雷悟道。",
    "X72n1435_031:0361c06_2": "何妨抱子懷孫。",
    "X72n1435_031:0361c06_3": "指雪傳心。",
    "X72n1435_031:0361c06_4": "不礙男婚女嫁。",
    "X72n1435_031:0361c07_5": "即事離事。",
    "X72n1435_031:0361c07_6": "居塵出塵。",
    "X72n1435_031:0361c07_7": "喚來瓶裏之鵞。",
    "X72n1435_031:0361c07_8": "放出雲中之鶴。",
    "X72n1435_031:0361c08_9": "某慣熟藜羮。",
    "X72n1435_031:0361c08_10": "時疑梵字。",
    "X72n1435_031:0361c08_11": "聞囀鶯而慚語。",
    "X72n1435_031:0361c08_12": "拜翰教以厚顏。",
    "X72n1435_031:0361c09_13": "希恕耑愚。",
    "X72n1435_031:0361c09_14": "無煩齒頰。",
    "X72n1435_031:0361c10_0": "　　　復",
    "X72n1435_031:0361c11_0": "明鏡非臺。",
    "X72n1435_031:0361c11_1": "在無心而可鑑。",
    "X72n1435_031:0361c11_2": "菩提有種。",
    "X72n1435_031:0361c11_3": "誠諦信以抽芽。",
    "X72n1435_031:0361c12_0": "藉願力金繩。",
    "X72n1435_031:0361c12_1": "動樞機屏翰。",
    "X72n1435_031:0361c12_2": "恭惟臺下。",
    "X72n1435_031:0361c12_3": "靈源皎潔。",
    "X72n1435_031:0361c12_4": "道樹敷榮。",
    "X72n1435_031:0361c13_5": "斂法界于毫端。",
    "X72n1435_031:0361c13_6": "運絲綸于掌上。",
    "X72n1435_031:0361c13_7": "深談不二。",
    "X72n1435_031:0361c13_8": "須知金粟重來。",
    "X72n1435_031:0361c14_9": "摶聚大千。",
    "X72n1435_031:0361c14_10": "喜見曇花再現。",
    "X72n1435_031:0361c14_11": "枝枝珊瑚帶月。",
    "X72n1435_031:0361c15_0": "行行欄楯披雲。",
    "X72n1435_031:0361c15_1": "履諸宿芳塵。",
    "X72n1435_031:0361c15_2": "洞羣迷寶所。",
    "X72n1435_031:0361c15_3": "某鹿苑委身。",
    "X72n1435_031:0361c16_4": "濫蠟人戒。",
    "X72n1435_031:0361c16_5": "悃禪門寄跡。",
    "X72n1435_031:0361c16_6": "愧鼻祖燈傳。",
    "X72n1435_031:0361c16_7": "急旋錫以驚遲。",
    "X72n1435_031:0361c17_8": "敢攀緣而應命。",
    "X72n1435_031:0361c17_9": "援毫悚慄。",
    "X72n1435_031:0361c17_10": "安住不遑。",
    "X72n1435_031:0361c18_0": "復陳",
    "X72n1435_031:0361c19_0": "大居士。",
    "X72n1435_031:0361c19_1": "天王碩輔。",
    "X72n1435_031:0361c19_2": "菩薩宰官。",
    "X72n1435_031:0361c19_3": "印毗耶真乘。",
    "X72n1435_031:0361c19_4": "妙契風規不二。",
    "X72n1435_031:0361c20_5": "踵太丘德業。",
    "X72n1435_031:0361c20_6": "爭高月旦無雙。",
    "X72n1435_031:0361c20_7": "節旄望重江藩。",
    "X72n1435_031:0361c20_8": "屏翰功高法苑。",
    "X72n1435_031:0361c21_9": "稽祖燈半籍。",
    "X72n1435_031:0361c21_10": "僧率多閩海鱗龍。",
    "X72n1435_031:0361c21_11": "拈聖箭一枝。",
    "X72n1435_031:0361c22_12": "公實作鼓山城塹。",
    "X72n1435_031:0361c22_13": "接起晏祖道脈。",
    "X72n1435_031:0361c22_14": "皆可悟不跨石門之禪。",
    "X72n1435_031:0361c23_15": "挽迴雪嶠靈風。",
    "X72n1435_031:0361c23_16": "喜復覩當年喝水之勝。",
    "X72n1435_031:0361c23_17": "蹋神駒捋猛虎。",
    "X72n1435_031:0361c24_18": "豈圖熱閙門庭。",
    "X72n1435_031:0361c24_19": "擊法鼓竪慈幢。",
    "X72n1435_031:0361c24_20": "所貴翻騰龍象。",
    "X72n1435_031:0362a01_21": "貧衲未瞻光霽。",
    "X72n1435_031:0362a01_22": "先仰星雲。",
    "X72n1435_031:0362a01_23": "物之格矣。",
    "X72n1435_031:0362a01_24": "想子韶頌月夜蛙聲。",
    "X72n1435_031:0362a02_25": "吾無隱乎。",
    "X72n1435_031:0362a02_26": "喜山谷聞木樨香氣。",
    "X72n1435_031:0362a02_27": "深承折簡。",
    "X72n1435_031:0362a03_28": "尚候摳衣。",
    "X72n1435_031:0362a03_29": "傳法入閩南。",
    "X72n1435_031:0362a03_30": "雖不效背觸竹篦問答。",
    "X72n1435_031:0362a03_31": "賞音逢太傅。",
    "X72n1435_031:0362a04_32": "還商量打翻茶銚機緣。",
    "X72n1435_031:0362a04_33": "把臂雖遲。",
    "X72n1435_031:0362a04_34": "馳神不遠。",
    "X72n1435_031:0362a06_0": "復黃惺源諸居士(二)",
    "X72n1435_031:0362a07_0": "羨黃梅負舂。",
    "X72n1435_031:0362a07_1": "妙悟心非臺樹。",
    "X72n1435_031:0362a07_2": "笑金粟戴髮。",
    "X72n1435_031:0362a07_3": "超然品逾風塵。",
    "X72n1435_031:0362a08_4": "示有家而修梵。",
    "X72n1435_031:0362a08_5": "不壞俗以談真。",
    "X72n1435_031:0362a08_6": "莫問。",
    "X72n1435_031:0362a08_7": "陸和泥。",
    "X72n1435_031:0362a08_8": "皆可產青蓮瓣。",
    "X72n1435_031:0362a09_9": "無分鍮與石。",
    "X72n1435_031:0362a09_10": "總是點黃金資。",
    "X72n1435_031:0362a09_11": "瑩戒珠于五濁。",
    "X72n1435_031:0362a10_12": "是水可清。",
    "X72n1435_031:0362a10_13": "趨善道于八關。",
    "X72n1435_031:0362a10_14": "有情皆佛。",
    "X72n1435_031:0362a10_15": "妙在回頭得岸。",
    "X72n1435_031:0362a11_16": "不妨就路還鄉。",
    "X72n1435_031:0362a11_17": "携竿木遊廛。",
    "X72n1435_031:0362a11_18": "逢場作戲。",
    "X72n1435_031:0362a11_19": "插莖草建剎。",
    "X72n1435_031:0362a12_20": "吹火因風。",
    "X72n1435_031:0362a12_21": "甘贄設供。",
    "X72n1435_031:0362a12_22": "勾南泉打破粥鍋。",
    "X72n1435_031:0362a12_23": "龐公喫交。",
    "X72n1435_031:0362a13_24": "惹靈照從傍倒地。",
    "X72n1435_031:0362a13_25": "團圞頭說不生話。",
    "X72n1435_031:0362a13_26": "須是作家。",
    "X72n1435_031:0362a13_27": "糞掃堆拾無價珠。",
    "X72n1435_031:0362a14_28": "還他好漢。",
    "X72n1435_031:0362a14_29": "所望眾居士。",
    "X72n1435_031:0362a14_30": "信手揭開衣裏寶。",
    "X72n1435_031:0362a15_31": "擡頭識取屋中人。",
    "X72n1435_031:0362a15_32": "不惟石鼓金湯。",
    "X72n1435_031:0362a15_33": "且解晏祖聖箭。",
    "X72n1435_031:0362a17_0": "碧水倒流。",
    "X72n1435_031:0362a17_1": "一喝當年信釆。",
    "X72n1435_031:0362a17_2": "青雲得路。",
    "X72n1435_031:0362a17_3": "羣公此處通霄。",
    "X72n1435_031:0362a18_0": "靈心粲筆底之花。",
    "X72n1435_031:0362a18_1": "秀色攬峯尖之紫。",
    "X72n1435_031:0362a18_2": "驚人活句。",
    "X72n1435_031:0362a18_3": "從聖箭穿下過來。",
    "X72n1435_031:0362a19_4": "竦耳法音。",
    "X72n1435_031:0362a19_5": "在氷消語中流出。",
    "X72n1435_031:0362a19_6": "昔之典型未遠。",
    "X72n1435_031:0362a20_7": "于今豪傑無難。",
    "X72n1435_031:0362a20_8": "力貴擔當。",
    "X72n1435_031:0362a20_9": "道親履踐。",
    "X72n1435_031:0362a20_10": "況八閩擅雄才之地品。",
    "X72n1435_031:0362a21_11": "爭誇虎史麟經。",
    "X72n1435_031:0362a21_12": "即諸祖續照世之燈代。",
    "X72n1435_031:0362a22_0": "不乏玄詮僧寶。",
    "X72n1435_031:0362a22_1": "緣遇投乎鍼芥。",
    "X72n1435_031:0362a22_2": "法興賴于金湯。",
    "X72n1435_031:0362a22_3": "伏願。",
    "X72n1435_031:0362a23_0": "衣珠晃耀。",
    "X72n1435_031:0362a23_1": "眉底法眼頓開。",
    "X72n1435_031:0362a23_2": "寶鏡高懸。",
    "X72n1435_031:0362a23_3": "照內真光不昧。",
    "X72n1435_031:0362a24_0": "倘不負名山約。",
    "X72n1435_031:0362a24_1": "徑跨野鶴凌空。",
    "X72n1435_031:0362a24_2": "尚冀瞻異日光。",
    "X72n1435_031:0362a24_3": "暫對飛鴻辭命。",
    "X72n1435_031:0362b01_4": "溪山有異。",
    "X72n1435_031:0362b01_5": "雲月是同。",
    "X72n1435_031:0362b01_6": "肅此八行。",
    "X72n1435_031:0362b01_7": "謝虗左席。",
    "X72n1435_031:0362b02_0": "復魏國徐六岳居士(附請啟)",
    "X72n1435_031:0362b03_0": "伏以。",
    "X72n1435_031:0362b03_1": "一乘大法。",
    "X72n1435_031:0362b03_2": "單提震旦總持。",
    "X72n1435_031:0362b03_3": "千里舊畿。",
    "X72n1435_031:0362b03_4": "願聽白椎振響。",
    "X72n1435_031:0362b04_5": "敢申尺素。",
    "X72n1435_031:0362b04_6": "遙布腹心。",
    "X72n1435_031:0362b04_7": "緬惟。",
    "X72n1435_031:0362b04_8": "無異大師。",
    "X72n1435_031:0362b04_9": "五印乘天。",
    "X72n1435_031:0362b05_10": "一花表異。",
    "X72n1435_031:0362b05_11": "婆心濟世。",
    "X72n1435_031:0362b05_12": "現比丘菩薩身。",
    "X72n1435_031:0362b05_13": "佛手療人。",
    "X72n1435_031:0362b06_14": "作廣大教化主。",
    "X72n1435_031:0362b06_15": "人人待如怙恃。",
    "X72n1435_031:0362b06_16": "在在倚為津梁。",
    "X72n1435_031:0362b07_0": "法席聳西江。",
    "X72n1435_031:0362b07_1": "宗旨振即心即佛。",
    "X72n1435_031:0362b07_2": "鴻名鏘東土。",
    "X72n1435_031:0362b07_3": "歸依滿世出世間。",
    "X72n1435_031:0362b08_4": "(弘基)愧墮塵氛。",
    "X72n1435_031:0362b08_5": "蘄聆謦欬。",
    "X72n1435_031:0362b08_6": "顧封疆之脩阻。",
    "X72n1435_031:0362b09_7": "致悃素之鬱陶。",
    "X72n1435_031:0362b09_8": "頂禮有緣。",
    "X72n1435_031:0362b09_9": "瞻依敢後。",
    "X72n1435_031:0362b09_10": "頃因宰官居士之拭目振錫。",
    "X72n1435_031:0362b10_11": "竊役管城毛頴。",
    "X72n1435_031:0362b10_12": "以稽首颺言。",
    "X72n1435_031:0362b11_0": "祈一舸以南來。",
    "X72n1435_031:0362b11_1": "正法眼藏應須有付。",
    "X72n1435_031:0362b11_2": "搖雙旌而西望。",
    "X72n1435_031:0362b12_3": "金毛聲吼端匪異人。",
    "X72n1435_031:0362b12_4": "(弘基)臨啟曷勝顒遡。",
    "X72n1435_031:0362b12_5": "仲春朔日。",
    "X72n1435_031:0362b13_6": "弘基再稽首。",
    "X72n1435_031:0362b14_0": "伏以。",
    "X72n1435_031:0362b14_1": "天王碩輔。",
    "X72n1435_031:0362b14_2": "勛猷望重八夷。",
    "X72n1435_031:0362b14_3": "菩薩陪臣。",
    "X72n1435_031:0362b14_4": "屏翰功高五寺。",
    "X72n1435_031:0362b15_5": "運悲華而播揚大教。",
    "X72n1435_031:0362b15_6": "瞻毫相而悃恊素心。",
    "X72n1435_031:0362b15_7": "祇樹非遙。",
    "X72n1435_031:0362b16_8": "金湯有賴。",
    "X72n1435_031:0362b16_9": "恭惟。",
    "X72n1435_031:0362b16_10": "六翁大居士閣下。",
    "X72n1435_031:0362b16_11": "肘後懸符。",
    "X72n1435_031:0362b16_12": "示居塵而不染。",
    "X72n1435_031:0362b17_13": "衣中揭寶。",
    "X72n1435_031:0362b17_14": "信即俗以原真。",
    "X72n1435_031:0362b17_15": "秀結慈林。",
    "X72n1435_031:0362b17_16": "光彌覺海。",
    "X72n1435_031:0362b18_17": "優曇有種。",
    "X72n1435_031:0362b18_18": "佛照無私。",
    "X72n1435_031:0362b18_19": "趂盲龜鞭跛鱉。",
    "X72n1435_031:0362b18_20": "為求法海神龍。",
    "X72n1435_031:0362b19_21": "圖快鷂放俊鷹。",
    "X72n1435_031:0362b19_22": "豈彈林間野雀。",
    "X72n1435_031:0362b19_23": "遍界吐紫磨金色。",
    "X72n1435_031:0362b20_24": "滿城嗅青蓮瓣香。",
    "X72n1435_031:0362b20_25": "不讓金粟玄模。",
    "X72n1435_031:0362b20_26": "喜見明公偉勣。",
    "X72n1435_031:0362b21_27": "耀心光於五蘊。",
    "X72n1435_031:0362b21_28": "在欲行禪。",
    "X72n1435_031:0362b21_29": "振祖道於四衢。",
    "X72n1435_031:0362b21_30": "何生不佛。",
    "X72n1435_031:0362b22_31": "花雨再沾鍾阜。",
    "X72n1435_031:0362b22_32": "浮杯必躍江濵。",
    "X72n1435_031:0362b22_33": "蹤跡可尋。",
    "X72n1435_031:0362b22_34": "法緣在邇。",
    "X72n1435_031:0362b23_35": "肅此裁謝。",
    "X72n1435_031:0362b23_36": "不盡瞻依。",
    "X72n1435_031:0362b24_0": "復南都見任眾居士(附請啟)",
    "X72n1435_031:0362c01_0": "伏以。",
    "X72n1435_031:0362c01_1": "萬滙歸源。",
    "X72n1435_031:0362c01_2": "玉瀝作全潮之用。",
    "X72n1435_031:0362c01_3": "五都列市。",
    "X72n1435_031:0362c01_4": "金衡為眾肆之宗。",
    "X72n1435_031:0362c02_5": "故歸頂者法必尊其王。",
    "X72n1435_031:0362c02_6": "而垂手者地亦占其勝。",
    "X72n1435_031:0362c03_7": "遙香悚注。",
    "X72n1435_031:0362c03_8": "空錫歡瞻。",
    "X72n1435_031:0362c03_9": "恭惟。",
    "X72n1435_031:0362c03_10": "無異大師。",
    "X72n1435_031:0362c03_11": "雲開曩劫。",
    "X72n1435_031:0362c04_12": "露沃今天。",
    "X72n1435_031:0362c04_13": "續曹洞之燈。",
    "X72n1435_031:0362c04_14": "慈羅舉而普馴鳥性。",
    "X72n1435_031:0362c05_15": "嗣壽昌之鉢。",
    "X72n1435_031:0362c05_16": "慧鏡懸而頓拔蓬心。",
    "X72n1435_031:0362c05_17": "賓中主主中賓。",
    "X72n1435_031:0362c06_18": "衲僧眼幾回遭換。",
    "X72n1435_031:0362c06_19": "牛非牛馬非馬。",
    "X72n1435_031:0362c06_20": "古佛口到此難開。",
    "X72n1435_031:0362c07_21": "煙逈楚峯。",
    "X72n1435_031:0362c07_22": "麒麟息處已居花界。",
    "X72n1435_031:0362c07_23": "霜澄饒水。",
    "X72n1435_031:0362c07_24": "師子遊時即現金燈。",
    "X72n1435_031:0362c08_25": "幡飄慕化之田。",
    "X72n1435_031:0362c08_26": "雨下聞聲之種。",
    "X72n1435_031:0362c09_0": "翹依寶葢。",
    "X72n1435_031:0362c09_1": "乃在金陵。",
    "X72n1435_031:0362c09_2": "道鼓久震於重雷。",
    "X72n1435_031:0362c09_3": "幸　高皇之弘護。",
    "X72n1435_031:0362c10_4": "義缸常明于薄夜。",
    "X72n1435_031:0362c10_5": "頌初祖之遙臨。",
    "X72n1435_031:0362c10_6": "但皮髓難分。",
    "X72n1435_031:0362c11_7": "誰下吹毛之劍。",
    "X72n1435_031:0362c11_8": "即象牛交集。",
    "X72n1435_031:0362c11_9": "那調載帝之輪。",
    "X72n1435_031:0362c12_0": "二千里思佛日之再中。",
    "X72n1435_031:0362c12_1": "百萬人望優曇之一現。",
    "X72n1435_031:0362c12_2": "(某等)紅緣方劇。",
    "X72n1435_031:0362c13_3": "黑障未消。",
    "X72n1435_031:0362c13_4": "奉三尺而拜手　君恩。",
    "X72n1435_031:0362c13_5": "拈一拂以盟心佛囑。",
    "X72n1435_031:0362c14_6": "用是。",
    "X72n1435_031:0362c14_7": "具陳花水。",
    "X72n1435_031:0362c14_8": "整飾蒲藤。",
    "X72n1435_031:0362c14_9": "遠迎微玅之臺。",
    "X72n1435_031:0362c15_10": "先淨莊嚴之界。",
    "X72n1435_031:0362c15_11": "千雲禮座。",
    "X72n1435_031:0362c15_12": "吳峯堪抵雙林。",
    "X72n1435_031:0362c16_13": "一士當機。",
    "X72n1435_031:0362c16_14": "淮水俱成五味。",
    "X72n1435_031:0362c16_15": "(某等)曷勝翹首以迓謹啟。",
    "X72n1435_031:0362c17_16": "時仲春朔日。",
    "X72n1435_031:0362c17_17": "護法弟子任僎朱葵袁楷王永吉程策嚴爾珪龐承寵曹應秋曾化龍陳爰謀王維新周光夏吳國模林欲梧周孕衷等。",
    "X72n1435_031:0362c19_18": "再稽首。",
    "X72n1435_031:0362c20_0": "伏以。",
    "X72n1435_031:0362c20_1": "慈洽靈山。",
    "X72n1435_031:0362c20_2": "大臣獨善於囑累。",
    "X72n1435_031:0362c20_3": "派分鷲嶺。",
    "X72n1435_031:0362c20_4": "名儒多載於傳燈。",
    "X72n1435_031:0362c21_5": "點開水面印文。",
    "X72n1435_031:0362c21_6": "喚醒域中長者。",
    "X72n1435_031:0362c21_7": "弘張勝軌。",
    "X72n1435_031:0362c22_0": "高建妙幢。",
    "X72n1435_031:0362c22_1": "恭惟。",
    "X72n1435_031:0362c22_2": "列位大居士閣下。",
    "X72n1435_031:0362c22_3": "心蘊經綸。",
    "X72n1435_031:0362c22_4": "直詣天王華屋。",
    "X72n1435_031:0362c23_5": "望巍柱石。",
    "X72n1435_031:0362c23_6": "毋忘大事因緣。",
    "X72n1435_031:0362c23_7": "匪藉神鋒。",
    "X72n1435_031:0362c23_8": "雲呈五色。",
    "X72n1435_031:0362c24_9": "不撾毒鼓。",
    "X72n1435_031:0362c24_10": "天雨四花。",
    "X72n1435_031:0362c24_11": "指頭觸而處處逢渠。",
    "X72n1435_031:0362c24_12": "化城過而行行寶所。",
    "X72n1435_031:0363a01_13": "萬境燁　熈朝之景。",
    "X72n1435_031:0363a01_14": "遐方之僧舍流輝。",
    "X72n1435_031:0363a02_0": "羣生沐造就之恩。",
    "X72n1435_031:0363a02_1": "古剎之香雲結綵。",
    "X72n1435_031:0363a02_2": "梵音未衍。",
    "X72n1435_031:0363a02_3": "祖道斯弘。",
    "X72n1435_031:0363a03_4": "倘杖錫之從緣。",
    "X72n1435_031:0363a03_5": "約缾花為代語。",
    "X72n1435_031:0363a03_6": "溪山有異。",
    "X72n1435_031:0363a03_7": "雲月是同。",
    "X72n1435_031:0363a04_8": "肅此八行。",
    "X72n1435_031:0363a04_9": "謝虗左席。",
    "X72n1435_031:0363a05_0": "復南都眾鄉紳居士(附請啟)",
    "X72n1435_031:0363a06_0": "伏以。",
    "X72n1435_031:0363a06_1": "雜花分雨。",
    "X72n1435_031:0363a06_2": "羅海渧以弘詮。",
    "X72n1435_031:0363a06_3": "靈葉彌天。",
    "X72n1435_031:0363a06_4": "妙曦暉而徧德。",
    "X72n1435_031:0363a07_5": "鯨鐘鼉鼓。",
    "X72n1435_031:0363a07_6": "須大震於霄衢。",
    "X72n1435_031:0363a07_7": "寶筏金繩。",
    "X72n1435_031:0363a07_8": "定高馳於日輦。",
    "X72n1435_031:0363a08_9": "毋念覺途之不廣。",
    "X72n1435_031:0363a08_10": "并先覺之聖生悲。",
    "X72n1435_031:0363a08_11": "竊傷護法之無人。",
    "X72n1435_031:0363a09_12": "并問法之人易阻。",
    "X72n1435_031:0363a09_13": "江之左湘之右。",
    "X72n1435_031:0363a10_0": "眾同妙淨之船。",
    "X72n1435_031:0363a10_1": "此非親彼非疎。",
    "X72n1435_031:0363a10_2": "緣現廣長之舌。",
    "X72n1435_031:0363a10_3": "故翹誠傾注者。",
    "X72n1435_031:0363a11_4": "居滿字之半。",
    "X72n1435_031:0363a11_5": "覿面親承者。",
    "X72n1435_031:0363a11_6": "弘果地之因。",
    "X72n1435_031:0363a12_7": "眾愫虔宣。",
    "X72n1435_031:0363a12_8": "積丹歸命。",
    "X72n1435_031:0363a12_9": "恭惟。",
    "X72n1435_031:0363a12_10": "博山大師。",
    "X72n1435_031:0363a12_11": "髓流曹洞。",
    "X72n1435_031:0363a13_0": "鍼施頂門。",
    "X72n1435_031:0363a13_1": "耨池八味而注多方。",
    "X72n1435_031:0363a13_2": "戒月三空而澄此土。",
    "X72n1435_031:0363a14_3": "亘古來拈花。",
    "X72n1435_031:0363a14_4": "指栢都付木叉之童。",
    "X72n1435_031:0363a14_5": "尋常見陷虎。",
    "X72n1435_031:0363a15_0": "牽猱穿翻泥鬬之鼻。",
    "X72n1435_031:0363a15_1": "揮鋒如月。",
    "X72n1435_031:0363a15_2": "靈錫可飛。",
    "X72n1435_031:0363a15_3": "垂手若雲。",
    "X72n1435_031:0363a16_4": "慈航不繫。",
    "X72n1435_031:0363a16_5": "性相玅嚴華藏海。",
    "X72n1435_031:0363a16_6": "因緣具集王舍城。",
    "X72n1435_031:0363a17_0": "正須幻示準繩。",
    "X72n1435_031:0363a17_1": "聊一掀翻骨董。",
    "X72n1435_031:0363a17_2": "葢金陵首善。",
    "X72n1435_031:0363a17_3": "　高帝盛明佛法以作金湯。",
    "X72n1435_031:0363a18_4": "而玉筍隗[阿可+我]。",
    "X72n1435_031:0363a18_5": "康僧先感舍利以隆緣起。",
    "X72n1435_031:0363a19_6": "南國之風期未謝。",
    "X72n1435_031:0363a19_7": "　累朝之芘藾斯弘。",
    "X72n1435_031:0363a20_8": "蒼蚪赤虺所共居。",
    "X72n1435_031:0363a20_9": "亟須慧炬。",
    "X72n1435_031:0363a20_10": "璞金鍮石而同集。",
    "X72n1435_031:0363a21_0": "應借洪罏。",
    "X72n1435_031:0363a21_1": "大乘法中樹最勝一幢。",
    "X72n1435_031:0363a21_2": "誰許他分宗判教。",
    "X72n1435_031:0363a22_3": "菩薩地上現普隨三昧。",
    "X72n1435_031:0363a22_4": "正在此通國大都。",
    "X72n1435_031:0363a22_5": "(某等)既把臂以同林。",
    "X72n1435_031:0363a23_6": "因矢心而為法。",
    "X72n1435_031:0363a23_7": "可知讀殘萬卷。",
    "X72n1435_031:0363a23_8": "不免猶作鈍中人。",
    "X72n1435_031:0363a24_9": "又道不挂一絲。",
    "X72n1435_031:0363a24_10": "如何尚稱堦下漢。",
    "X72n1435_031:0363b01_0": "幸今長者居士。",
    "X72n1435_031:0363b01_1": "共悲日夜是盲人。",
    "X72n1435_031:0363b01_2": "又兼宰官大臣。",
    "X72n1435_031:0363b02_0": "自憫風波與[宋木+喬]客。",
    "X72n1435_031:0363b02_1": "一番汗出。",
    "X72n1435_031:0363b02_2": "盡日心馳。",
    "X72n1435_031:0363b02_3": "付囑慚負老瞿曇。",
    "X72n1435_031:0363b03_4": "慈悲全賴善知識。",
    "X72n1435_031:0363b03_5": "解空起有。",
    "X72n1435_031:0363b03_6": "曾聞寶地迦陵。",
    "X72n1435_031:0363b04_7": "應供轉輪。",
    "X72n1435_031:0363b04_8": "仰祝珠林香象。",
    "X72n1435_031:0363b04_9": "猛動眾忱之注。",
    "X72n1435_031:0363b04_10": "豈非因緣。",
    "X72n1435_031:0363b05_11": "堅挑素志之盟。",
    "X72n1435_031:0363b05_12": "實勞饑渴。",
    "X72n1435_031:0363b05_13": "即願燈王移座。",
    "X72n1435_031:0363b05_14": "不煩香國借厨。",
    "X72n1435_031:0363b06_15": "但現圓身。",
    "X72n1435_031:0363b06_16": "煙帶六朝非浪宕。",
    "X72n1435_031:0363b06_17": "總堪善世。",
    "X72n1435_031:0363b07_18": "雨花千載說繽紛。",
    "X72n1435_031:0363b07_19": "雖大地蒼蒼。",
    "X72n1435_031:0363b07_20": "難詶六月松風之價。",
    "X72n1435_031:0363b08_21": "而諸天涌涌。",
    "X72n1435_031:0363b08_22": "欲發萬井火蓮之香。",
    "X72n1435_031:0363b08_23": "崇鑒深祈。",
    "X72n1435_031:0363b09_0": "遠瞻如結。",
    "X72n1435_031:0363b09_1": "(某等)可任馳遡顒仰之至。",
    "X72n1435_031:0363b09_2": "護法弟子顧起鳳徐揚先俞彥丁明登吳家周汪偉蔡屏周陳元慶李琜菩薩戒弟子余大成等。",
    "X72n1435_031:0363b11_3": "再稽首。",
    "X72n1435_031:0363b12_0": "伏以。",
    "X72n1435_031:0363b12_1": "都城浩浩。",
    "X72n1435_031:0363b12_2": "時被花雨毫光。",
    "X72n1435_031:0363b12_3": "巨剎巍巍。",
    "X72n1435_031:0363b12_4": "賸有獅猊曲盝。",
    "X72n1435_031:0363b13_5": "斬新條發新令。",
    "X72n1435_031:0363b13_6": "佛法仗有力大人。",
    "X72n1435_031:0363b13_7": "藉斯日現斯祥。",
    "X72n1435_031:0363b14_8": "唱和在因緣時節。",
    "X72n1435_031:0363b14_9": "恭惟。",
    "X72n1435_031:0363b14_10": "列位大居士閣下。",
    "X72n1435_031:0363b14_11": "廊廟鼎鉉。",
    "X72n1435_031:0363b15_12": "就世法而興出世。",
    "X72n1435_031:0363b15_13": "寰宇山斗。",
    "X72n1435_031:0363b15_14": "居塵界而樂超塵。",
    "X72n1435_031:0363b15_15": "碑文白字可觀。",
    "X72n1435_031:0363b16_16": "當道青松堪種。",
    "X72n1435_031:0363b16_17": "真儀有像。",
    "X72n1435_031:0363b16_18": "呼來壁上高僧。",
    "X72n1435_031:0363b17_19": "活句驚人。",
    "X72n1435_031:0363b17_20": "喚出缾中鵞子。",
    "X72n1435_031:0363b17_21": "緝為純嘏。",
    "X72n1435_031:0363b17_22": "助此清芬。",
    "X72n1435_031:0363b17_23": "湛若氷鑑無心。",
    "X72n1435_031:0363b18_24": "隨方隅而映色。",
    "X72n1435_031:0363b18_25": "暖過陽春有脚。",
    "X72n1435_031:0363b18_26": "即溝壑以沾濡。",
    "X72n1435_031:0363b19_27": "不世希逢。",
    "X72n1435_031:0363b19_28": "大因盛舉。",
    "X72n1435_031:0363b19_29": "(某)嬾同瓚老。",
    "X72n1435_031:0363b19_30": "祇知採汲不虗。",
    "X72n1435_031:0363b20_31": "跡類融師。",
    "X72n1435_031:0363b20_32": "那辯巖花之墜。",
    "X72n1435_031:0363b20_33": "懷鄉雲占瑞兆。",
    "X72n1435_031:0363b20_34": "　君恩水土難詶。",
    "X72n1435_031:0363b21_35": "運慧日靜邊陲。",
    "X72n1435_031:0363b21_36": "佛教金湯有賴。",
    "X72n1435_031:0363b21_37": "布慈雲灑甘露。",
    "X72n1435_031:0363b22_38": "羣公悲願交敷。",
    "X72n1435_031:0363b22_39": "懸赤幟豎妙幢。",
    "X72n1435_031:0363b22_40": "萬劫津梁普度。",
    "X72n1435_031:0363b23_41": "具啟馳謝。",
    "X72n1435_031:0363b23_42": "曷任瞻光。",
    "X72n1435_031:0363b24_0": "序",
    "X72n1435_031:0363c01_0": "重刻五燈會元序",
    "X72n1435_031:0363c02_0": "釋迦不出世。",
    "X72n1435_031:0363c02_1": "祖師不西來。",
    "X72n1435_031:0363c02_2": "佛法遍大地。",
    "X72n1435_031:0363c02_3": "談玄口不開。",
    "X72n1435_031:0363c03_0": "當此時也。",
    "X72n1435_031:0363c03_1": "語言文字。",
    "X72n1435_031:0363c03_2": "蹤跡不來。",
    "X72n1435_031:0363c03_3": "棒喝機緣。",
    "X72n1435_031:0363c03_4": "鋒芒不露。",
    "X72n1435_031:0363c04_0": "逮夫拈花示眾。",
    "X72n1435_031:0363c04_1": "牽起陳爛葛藤。",
    "X72n1435_031:0363c04_2": "立雪安心。",
    "X72n1435_031:0363c04_3": "突出現前公案。",
    "X72n1435_031:0363c05_4": "遂使宗風廣衍。",
    "X72n1435_031:0363c05_5": "慧日高懸。",
    "X72n1435_031:0363c05_6": "燃長夜之燈。",
    "X72n1435_031:0363c05_7": "羣昏頓曉。",
    "X72n1435_031:0363c06_8": "拈一莖之草。",
    "X72n1435_031:0363c06_9": "法界齊觀。",
    "X72n1435_031:0363c06_10": "駕車須是打牛。",
    "X72n1435_031:0363c06_11": "磨磚豈能作鏡。",
    "X72n1435_031:0363c07_12": "如靈丹一粒。",
    "X72n1435_031:0363c07_13": "點鐵成金。",
    "X72n1435_031:0363c07_14": "至理一言。",
    "X72n1435_031:0363c07_15": "轉凡成聖。",
    "X72n1435_031:0363c07_16": "六代破水中之影。",
    "X72n1435_031:0363c08_17": "觸目皆真。",
    "X72n1435_031:0363c08_18": "五宗競空裏之花。",
    "X72n1435_031:0363c08_19": "通身是膽。",
    "X72n1435_031:0363c09_20": "橫趨而出笑。",
    "X72n1435_031:0363c09_21": "木[木*突]以何堪。",
    "X72n1435_031:0363c09_22": "撩起便行。",
    "X72n1435_031:0363c09_23": "悟佛法無多子。",
    "X72n1435_031:0363c10_24": "覩水影不從他覓。",
    "X72n1435_031:0363c10_25": "處處逢渠。",
    "X72n1435_031:0363c10_26": "斷脚脛痛見已非頭頭是道。",
    "X72n1435_031:0363c11_27": "若論佛法。",
    "X72n1435_031:0363c11_28": "一切現成。",
    "X72n1435_031:0363c11_29": "諦審玄猷千燈互照。",
    "X72n1435_031:0363c11_30": "龍蛇分於棒下。",
    "X72n1435_031:0363c12_31": "凡聖藉以喝通。",
    "X72n1435_031:0363c12_32": "機發于未兆之先。",
    "X72n1435_031:0363c12_33": "用施乎形聲之外。",
    "X72n1435_031:0363c13_34": "乃至一言褒貶。",
    "X72n1435_031:0363c13_35": "一棒縱奪。",
    "X72n1435_031:0363c13_36": "以非為是。",
    "X72n1435_031:0363c13_37": "口似甜而意甚苦之。",
    "X72n1435_031:0363c14_38": "以是為非。",
    "X72n1435_031:0363c14_39": "心實允而辭無洽矣。",
    "X72n1435_031:0363c14_40": "雖久參耆宿。",
    "X72n1435_031:0363c15_41": "不敢以正眼覰。",
    "X72n1435_031:0363c15_42": "況識情解路。",
    "X72n1435_031:0363c15_43": "能通之乎。",
    "X72n1435_031:0363c15_44": "所以道。",
    "X72n1435_031:0363c16_45": "狂機劣解。",
    "X72n1435_031:0363c16_46": "不可以大法示。",
    "X72n1435_031:0363c16_47": "不可以宗乘聞。",
    "X72n1435_031:0363c16_48": "譬夫美食置諸穢器。",
    "X72n1435_031:0363c17_49": "祖不云乎。",
    "X72n1435_031:0363c17_50": "醍醐上味。",
    "X72n1435_031:0363c17_51": "為世所珍。",
    "X72n1435_031:0363c17_52": "遇斯等人。",
    "X72n1435_031:0363c18_53": "翻成毒藥。",
    "X72n1435_031:0363c18_54": "惟大心眾生。",
    "X72n1435_031:0363c18_55": "始能擔荷。",
    "X72n1435_031:0363c18_56": "入斯乘者。",
    "X72n1435_031:0363c18_57": "不可不自慎也。",
    "X72n1435_031:0363c19_58": "會五燈為一書者。",
    "X72n1435_031:0363c19_59": "宋靈隱大川禪師。",
    "X72n1435_031:0363c19_60": "未蒙入藏。",
    "X72n1435_031:0363c20_61": "雖一二處刊行。",
    "X72n1435_031:0363c20_62": "安能廣布。",
    "X72n1435_031:0363c20_63": "自性禪人。",
    "X72n1435_031:0363c20_64": "頓發大心。",
    "X72n1435_031:0363c21_65": "謀於觀察曹君。",
    "X72n1435_031:0363c21_66": "為之首倡。",
    "X72n1435_031:0363c21_67": "募諸同信。",
    "X72n1435_031:0363c21_68": "工過半矣。",
    "X72n1435_031:0363c21_69": "余初上鼓山。",
    "X72n1435_031:0363c22_70": "聞其事歡喜樂成。",
    "X72n1435_031:0363c22_71": "復徵余為序。",
    "X72n1435_031:0363c22_72": "因援毫以書其大槩。",
    "X72n1435_031:0363c23_73": "云爾。",
    "X72n1435_031:0363c24_0": "重刻禪警語序",
    "X72n1435_031:0364a01_0": "少林大師云。",
    "X72n1435_031:0364a01_1": "外息諸緣。",
    "X72n1435_031:0364a01_2": "內心無喘。",
    "X72n1435_031:0364a01_3": "心如墻壁。",
    "X72n1435_031:0364a01_4": "乃可入道。",
    "X72n1435_031:0364a02_5": "只此心如墻壁四箇字。",
    "X72n1435_031:0364a02_6": "是宗門中第一關鍵。",
    "X72n1435_031:0364a02_7": "今時禪者。",
    "X72n1435_031:0364a03_8": "作何公幹始與渠合。",
    "X72n1435_031:0364a03_9": "若以心意識思惟卜度。",
    "X72n1435_031:0364a03_10": "欲與少林宗旨相應。",
    "X72n1435_031:0364a04_11": "大似捫空捶響。",
    "X72n1435_031:0364a04_12": "豈但徒然心力。",
    "X72n1435_031:0364a04_13": "縱億萬劫。",
    "X72n1435_031:0364a05_14": "求其音聞。",
    "X72n1435_031:0364a05_15": "了不可得。",
    "X72n1435_031:0364a05_16": "殊不知。",
    "X72n1435_031:0364a05_17": "從上諸祖。",
    "X72n1435_031:0364a05_18": "向不思議中流出一言半句。",
    "X72n1435_031:0364a06_19": "如塗毒鼓。",
    "X72n1435_031:0364a06_20": "如伽陀藥。",
    "X72n1435_031:0364a06_21": "亦能殺人亦能活人。",
    "X72n1435_031:0364a07_22": "豈可以棒喝言句。",
    "X72n1435_031:0364a07_23": "妄加穿鑿。",
    "X72n1435_031:0364a07_24": "一一學。",
    "X72n1435_031:0364a07_25": "相似模樣。",
    "X72n1435_031:0364a08_26": "謂之悟門耶。",
    "X72n1435_031:0364a08_27": "問彼真參實究。",
    "X72n1435_031:0364a08_28": "做工夫。",
    "X72n1435_031:0364a08_29": "暗然無知。",
    "X72n1435_031:0364a09_30": "如欲行百里。",
    "X72n1435_031:0364a09_31": "未曾動著一步。",
    "X72n1435_031:0364a09_32": "良可憫矣。",
    "X72n1435_031:0364a09_33": "是故禪警語。",
    "X72n1435_031:0364a10_34": "不得不出。",
    "X72n1435_031:0364a10_35": "其中一言一字。",
    "X72n1435_031:0364a10_36": "悉余親履實踐。",
    "X72n1435_031:0364a10_37": "非敢出胸臆之見。",
    "X72n1435_031:0364a11_38": "此書刊行。",
    "X72n1435_031:0364a11_39": "十有餘載。",
    "X72n1435_031:0364a11_40": "學者多有不獲見之嘆。",
    "X72n1435_031:0364a12_41": "莆田黃居士。",
    "X72n1435_031:0364a12_42": "發心重刊。",
    "X72n1435_031:0364a12_43": "欲廣其傳。",
    "X72n1435_031:0364a12_44": "斯亦大菩薩之所用心也。",
    "X72n1435_031:0364a13_45": "嗚呼朝聞夕死。",
    "X72n1435_031:0364a13_46": "豈無深功。",
    "X72n1435_031:0364a13_47": "立地成佛。",
    "X72n1435_031:0364a13_48": "是何行度。",
    "X72n1435_031:0364a14_49": "隔江招手。",
    "X72n1435_031:0364a14_50": "值曇花結勝之時。",
    "X72n1435_031:0364a14_51": "撩倒便行。",
    "X72n1435_031:0364a14_52": "正玉線穿針之際。",
    "X72n1435_031:0364a15_53": "若無從前操履。",
    "X72n1435_031:0364a15_54": "安能遇此奇搆。",
    "X72n1435_031:0364a15_55": "學者只須做到徹頭處。",
    "X72n1435_031:0364a16_56": "然後積功累行。",
    "X72n1435_031:0364a16_57": "果入不思議法門。",
    "X72n1435_031:0364a16_58": "說箇成佛。",
    "X72n1435_031:0364a17_59": "猶賸語耳。",
    "X72n1435_031:0364a17_60": "況其他乎。",
    "X72n1435_031:0364a18_0": "萬佛名經壇儀序",
    "X72n1435_031:0364a19_0": "眾生淨覺。",
    "X72n1435_031:0364a19_1": "諸佛慧門。",
    "X72n1435_031:0364a19_2": "由熏變而成凡。",
    "X72n1435_031:0364a19_3": "隨淨緣而見佛。",
    "X72n1435_031:0364a20_0": "既隨緣染。",
    "X72n1435_031:0364a20_1": "緣實無生。",
    "X72n1435_031:0364a20_2": "聖凡迷悟。",
    "X72n1435_031:0364a20_3": "悉強名也。",
    "X72n1435_031:0364a20_4": "圓覺經云。",
    "X72n1435_031:0364a21_0": "知幻即離。",
    "X72n1435_031:0364a21_1": "不作方便。",
    "X72n1435_031:0364a21_2": "離幻即覺。",
    "X72n1435_031:0364a21_3": "亦無漸次。",
    "X72n1435_031:0364a21_4": "如此領略。",
    "X72n1435_031:0364a22_0": "不假漸修。",
    "X72n1435_031:0364a22_1": "非作故無。",
    "X72n1435_031:0364a22_2": "本性無故。",
    "X72n1435_031:0364a22_3": "良以。",
    "X72n1435_031:0364a22_4": "眾生情生智隔。",
    "X72n1435_031:0364a23_0": "想變體殊。",
    "X72n1435_031:0364a23_1": "趨暗背明。",
    "X72n1435_031:0364a23_2": "捨安投險。",
    "X72n1435_031:0364a23_3": "縱無明之嗔火。",
    "X72n1435_031:0364a23_4": "燎功德之稠林。",
    "X72n1435_031:0364a24_5": "沉業識之愛源。",
    "X72n1435_031:0364a24_6": "漲真常之覺海。",
    "X72n1435_031:0364a24_7": "戒乘路塞。",
    "X72n1435_031:0364b01_0": "人我山高。",
    "X72n1435_031:0364b01_1": "眾妄起而邪見生。",
    "X72n1435_031:0364b01_2": "諸器成而金體昧。",
    "X72n1435_031:0364b01_3": "隨情逐境。",
    "X72n1435_031:0364b02_4": "破四棄之清規。",
    "X72n1435_031:0364b02_5": "動念乖真。",
    "X72n1435_031:0364b02_6": "結八重之障罪。",
    "X72n1435_031:0364b02_7": "根本繫乎七眾。",
    "X72n1435_031:0364b03_8": "無論是俗是僧。",
    "X72n1435_031:0364b03_9": "結業失於一時。",
    "X72n1435_031:0364b03_10": "豈分在此在彼。",
    "X72n1435_031:0364b04_11": "受六交之苦報。",
    "X72n1435_031:0364b04_12": "雖千萬劫必償。",
    "X72n1435_031:0364b04_13": "造十習之惡因。",
    "X72n1435_031:0364b05_0": "縱億萬生不返。",
    "X72n1435_031:0364b05_1": "是以羣靈競出。",
    "X72n1435_031:0364b05_2": "大聖垂休。",
    "X72n1435_031:0364b05_3": "駕苦海之慈航。",
    "X72n1435_031:0364b06_4": "開覺城之鎻鑰。",
    "X72n1435_031:0364b06_5": "說難思之懺法。",
    "X72n1435_031:0364b06_6": "彰諸佛之洪名。",
    "X72n1435_031:0364b07_0": "設壇結界。",
    "X72n1435_031:0364b07_1": "獻供懸幡。",
    "X72n1435_031:0364b07_2": "燒種種香。",
    "X72n1435_031:0364b07_3": "散種種華。",
    "X72n1435_031:0364b07_4": "興大悲念。",
    "X72n1435_031:0364b08_0": "發菩提心。",
    "X72n1435_031:0364b08_1": "禮佛一拜。",
    "X72n1435_031:0364b08_2": "借壯士臂以折慢幢。",
    "X72n1435_031:0364b08_3": "念佛一聲。",
    "X72n1435_031:0364b09_0": "擲如意珠以澄濁水。",
    "X72n1435_031:0364b09_1": "空諸我相。",
    "X72n1435_031:0364b09_2": "徹彼真源。",
    "X72n1435_031:0364b09_3": "如滌淨器以見純金。",
    "X72n1435_031:0364b10_4": "似揭晴空而清智眼。",
    "X72n1435_031:0364b10_5": "貴在力行。",
    "X72n1435_031:0364b10_6": "毋容忽念。",
    "X72n1435_031:0364b11_0": "瑞凝相現。",
    "X72n1435_031:0364b11_1": "罪滅福生。",
    "X72n1435_031:0364b11_2": "若能諦信不疑。",
    "X72n1435_031:0364b11_3": "定許超凡入聖。",
    "X72n1435_031:0364b12_0": "斯經自某朝翻譯。",
    "X72n1435_031:0364b12_1": "載於藏典。",
    "X72n1435_031:0364b12_2": "人所罕聞。",
    "X72n1435_031:0364b12_3": "茲因某禪人化某居士。",
    "X72n1435_031:0364b13_4": "運大乘心。",
    "X72n1435_031:0364b13_5": "廣諸佛行。",
    "X72n1435_031:0364b13_6": "嚴涅槃山。",
    "X72n1435_031:0364b13_7": "拔眾生苦。",
    "X72n1435_031:0364b14_0": "消黑業于當念。",
    "X72n1435_031:0364b14_1": "財法二施。",
    "X72n1435_031:0364b14_2": "投智慧於悲田。",
    "X72n1435_031:0364b14_3": "賢愚一致。",
    "X72n1435_031:0364b15_0": "或云。",
    "X72n1435_031:0364b15_1": "我本宗門禪客。",
    "X72n1435_031:0364b15_2": "毋容瑣瑣事諸壇儀。",
    "X72n1435_031:0364b15_3": "當知。",
    "X72n1435_031:0364b15_4": "彼即地獄罪人。",
    "X72n1435_031:0364b16_5": "莫呵饒舌。",
    "X72n1435_031:0364b16_6": "願賜流通。",
    "X72n1435_031:0364b17_0": "維摩經折衷疏序",
    "X72n1435_031:0364b18_0": "藥山儼師。",
    "X72n1435_031:0364b18_1": "本教乘中之義虎也。",
    "X72n1435_031:0364b18_2": "初參石頭和尚云。",
    "X72n1435_031:0364b18_3": "三乘十二分教。",
    "X72n1435_031:0364b19_4": "某甲麤知。",
    "X72n1435_031:0364b19_5": "聞南方直指人心見性成佛。",
    "X72n1435_031:0364b20_0": "實未明了。",
    "X72n1435_031:0364b20_1": "宗與教果何如哉。",
    "X72n1435_031:0364b20_2": "教也者。",
    "X72n1435_031:0364b20_3": "即文字之宗也。",
    "X72n1435_031:0364b21_0": "宗也者。",
    "X72n1435_031:0364b21_1": "離文字之教也。",
    "X72n1435_031:0364b21_2": "即其旨者。",
    "X72n1435_031:0364b21_3": "一言一字。",
    "X72n1435_031:0364b21_4": "皆為最上乘之機。",
    "X72n1435_031:0364b22_5": "離其言者。",
    "X72n1435_031:0364b22_6": "一草一葉。",
    "X72n1435_031:0364b22_7": "皆入不思議之境。",
    "X72n1435_031:0364b22_8": "離之與即雖一。",
    "X72n1435_031:0364b23_9": "而較其迷之與悟。",
    "X72n1435_031:0364b23_10": "實霄壤之遠也。",
    "X72n1435_031:0364b23_11": "某髫年時。",
    "X72n1435_031:0364b24_12": "深於參究。",
    "X72n1435_031:0364b24_13": "未涉教乘。",
    "X72n1435_031:0364b24_14": "將謂葛藤絆倒。",
    "X72n1435_031:0364b24_15": "獨不入斯徑。",
    "X72n1435_031:0364c01_16": "及乎向壽昌險穽中跳過。",
    "X72n1435_031:0364c01_17": "回觀一大藏教。",
    "X72n1435_031:0364c01_18": "皆吾家之恒產。",
    "X72n1435_031:0364c02_19": "至閱維摩詰不思議之經者。",
    "X72n1435_031:0364c02_20": "如看家券。",
    "X72n1435_031:0364c02_21": "如遊歷寶藏。",
    "X72n1435_031:0364c03_22": "雖觸處皆珍。",
    "X72n1435_031:0364c03_23": "亦不傷鋒犯手。",
    "X72n1435_031:0364c03_24": "始信老瞿曇。",
    "X72n1435_031:0364c03_25": "及三千七百祖師。",
    "X72n1435_031:0364c04_26": "婆心斷斷不我欺也。",
    "X72n1435_031:0364c04_27": "此經自秦譯以來。",
    "X72n1435_031:0364c05_28": "始出肇師註。",
    "X72n1435_031:0364c05_29": "而多引什師之語。",
    "X72n1435_031:0364c05_30": "其文簡其旨深。",
    "X72n1435_031:0364c05_31": "文簡也。",
    "X72n1435_031:0364c06_32": "含章而不發。",
    "X72n1435_031:0364c06_33": "旨深也。",
    "X72n1435_031:0364c06_34": "美利而不施。",
    "X72n1435_031:0364c06_35": "使探玄之士。",
    "X72n1435_031:0364c07_0": "猶若望瓊樓而不得其門者。",
    "X72n1435_031:0364c07_1": "未免有懷深之嘆也。",
    "X72n1435_031:0364c07_2": "近時無盡法師疏之。",
    "X72n1435_031:0364c08_3": "印天台四教六即四悉三觀等語。",
    "X72n1435_031:0364c09_0": "其文浩繁。",
    "X72n1435_031:0364c09_1": "義旨重疊。",
    "X72n1435_031:0364c09_2": "如文句玄義。",
    "X72n1435_031:0364c09_3": "精貫誠雖矣。",
    "X72n1435_031:0364c09_4": "吾兄古德法師。",
    "X72n1435_031:0364c10_5": "新出斯解義。",
    "X72n1435_031:0364c10_6": "乃折中。",
    "X72n1435_031:0364c10_7": "銜實佩華。",
    "X72n1435_031:0364c10_8": "探奇抉異。",
    "X72n1435_031:0364c11_0": "而實有深旨。",
    "X72n1435_031:0364c11_1": "如炎蒸絺綌。",
    "X72n1435_031:0364c11_2": "凍冷貂裘。",
    "X72n1435_031:0364c11_3": "寒暑適時。",
    "X72n1435_031:0364c11_4": "清爽人意。",
    "X72n1435_031:0364c12_5": "大有補於教乘。",
    "X72n1435_031:0364c12_6": "使後之學者。",
    "X72n1435_031:0364c12_7": "就事事無礙之門。",
    "X72n1435_031:0364c13_0": "入不思議之境。",
    "X72n1435_031:0364c13_1": "無邊剎海悉我室中。",
    "X72n1435_031:0364c13_2": "燈王之座毋勞遠借。",
    "X72n1435_031:0364c14_3": "香積之飯豈假化人耶。",
    "X72n1435_031:0364c14_4": "若乃索須彌于芥子之孔。",
    "X72n1435_031:0364c15_5": "網魚龍於毫髮之端者。",
    "X72n1435_031:0364c15_6": "龐居士有言。",
    "X72n1435_031:0364c15_7": "山海坦然平。",
    "X72n1435_031:0364c16_0": "敲氷來煑茶。",
    "X72n1435_031:0364c16_1": "此話大行。",
    "X72n1435_031:0364c16_2": "予亦不諱。",
    "X72n1435_031:0364c16_3": "請留待別時。",
    "X72n1435_031:0364c16_4": "是為序。",
    "X72n1435_031:0364c18_0": "地理統一全書序",
    "X72n1435_031:0364c19_0": "夫真源未闢。",
    "X72n1435_031:0364c19_1": "至賾渾然。",
    "X72n1435_031:0364c19_2": "朕兆纔分。",
    "X72n1435_031:0364c19_3": "爻象定位。",
    "X72n1435_031:0364c19_4": "金藏雲鋪成世界聚沫。",
    "X72n1435_031:0364c20_5": "聳須彌之高。",
    "X72n1435_031:0364c20_6": "毗嵐風撼動虗空輪際。",
    "X72n1435_031:0364c21_0": "蒸滄海之潤。",
    "X72n1435_031:0364c21_1": "風金摩而火光上起。",
    "X72n1435_031:0364c21_2": "水土適而草木抽肥。",
    "X72n1435_031:0364c22_3": "葢以能造因心。",
    "X72n1435_031:0364c22_4": "華藏于茲幻立。",
    "X72n1435_031:0364c22_5": "所緣成境。",
    "X72n1435_031:0364c22_6": "法界從此區分。",
    "X72n1435_031:0364c23_7": "七金山內。",
    "X72n1435_031:0364c23_8": "阿耨池四水漫流。",
    "X72n1435_031:0364c23_9": "四大部洲。",
    "X72n1435_031:0364c23_10": "諸國土羣峯仰止。",
    "X72n1435_031:0364c24_11": "是故須彌有逆吞滄海之勢。",
    "X72n1435_031:0364c24_12": "滄海有旋溉須彌之雄。",
    "X72n1435_031:0365a01_13": "子母互生。",
    "X72n1435_031:0365a01_14": "恩情離合。",
    "X72n1435_031:0365a01_15": "星宿海矗崑崙之嶂。",
    "X72n1435_031:0365a02_16": "人人懷赤水之珠。",
    "X72n1435_031:0365a02_17": "黃河源插摩漢之峯。",
    "X72n1435_031:0365a02_18": "各各具擎天之柱。",
    "X72n1435_031:0365a03_19": "一本三榦。",
    "X72n1435_031:0365a03_20": "龍行結南北中枝。",
    "X72n1435_031:0365a03_21": "五嶽百川。",
    "X72n1435_031:0365a03_22": "輿圖分京畿郡縣。",
    "X72n1435_031:0365a04_23": "自非天眼。",
    "X72n1435_031:0365a04_24": "孰辯真蹤。",
    "X72n1435_031:0365a04_25": "的具仙才。",
    "X72n1435_031:0365a04_26": "方探正穴。",
    "X72n1435_031:0365a05_27": "九九八十一。",
    "X72n1435_031:0365a05_28": "變如水脈巨細緩急之流。",
    "X72n1435_031:0365a05_29": "六六三十六。",
    "X72n1435_031:0365a06_30": "奇盡洞壑襟帶逶迤之狀。",
    "X72n1435_031:0365a06_31": "郭景純錦囊創見。",
    "X72n1435_031:0365a06_32": "漢青烏祕說肇陳。",
    "X72n1435_031:0365a07_33": "接木倒杖。",
    "X72n1435_031:0365a07_34": "塟必乘生氣之機。",
    "X72n1435_031:0365a07_35": "透地穿山。",
    "X72n1435_031:0365a08_0": "數巧合分金之妙。",
    "X72n1435_031:0365a08_1": "典型代有。",
    "X72n1435_031:0365a08_2": "識者攸憑。",
    "X72n1435_031:0365a08_3": "惜乎。",
    "X72n1435_031:0365a08_4": "偽書出而星卦惑人。",
    "X72n1435_031:0365a09_5": "邪說行而災祥倒置。",
    "X72n1435_031:0365a09_6": "後學失稽。",
    "X72n1435_031:0365a09_7": "庸流沿習。",
    "X72n1435_031:0365a10_8": "惟　國朝劉青田。",
    "X72n1435_031:0365a10_9": "以堪轝寶鏡。",
    "X72n1435_031:0365a10_10": "力闢邪宗。",
    "X72n1435_031:0365a10_11": "使偽撰時師稍知返正。",
    "X72n1435_031:0365a11_12": "可謂。",
    "X72n1435_031:0365a11_13": "明眼之真傳。",
    "X72n1435_031:0365a11_14": "來學之赤幟者也。",
    "X72n1435_031:0365a12_0": "潭陽余文台居士。",
    "X72n1435_031:0365a12_1": "髫躭山水。",
    "X72n1435_031:0365a12_2": "冠獵玄經。",
    "X72n1435_031:0365a12_3": "歷代名篇。",
    "X72n1435_031:0365a12_4": "悉能究其源而知其委。",
    "X72n1435_031:0365a13_5": "八賢祕訣。",
    "X72n1435_031:0365a13_6": "莫不得其兔而忘其蹏。",
    "X72n1435_031:0365a14_7": "故集此新帙。",
    "X72n1435_031:0365a14_8": "彚作全書。",
    "X72n1435_031:0365a14_9": "如丸大千界為菴羅果。",
    "X72n1435_031:0365a14_10": "指掌可觀。",
    "X72n1435_031:0365a15_11": "似捧摩尼寶出娑竭宮。",
    "X72n1435_031:0365a15_12": "五方頓現。",
    "X72n1435_031:0365a15_13": "樹偉績洩天機。",
    "X72n1435_031:0365a16_14": "造化以之參贊。",
    "X72n1435_031:0365a16_15": "闡微言崇正論。",
    "X72n1435_031:0365a16_16": "古今益以洞明。",
    "X72n1435_031:0365a17_0": "斯實仁人孝子之所用心。",
    "X72n1435_031:0365a17_1": "亦乃報本造福之所急務。",
    "X72n1435_031:0365a18_0": "妥先靈血骨安煖。",
    "X72n1435_031:0365a18_1": "捄翻棺水蟻無侵。",
    "X72n1435_031:0365a18_2": "可謂。",
    "X72n1435_031:0365a18_3": "濟世之真詮。",
    "X72n1435_031:0365a19_4": "救貧之至寶。",
    "X72n1435_031:0365a19_5": "藏諸名山。",
    "X72n1435_031:0365a19_6": "以垂不朽云。",
    "X72n1435_031:0365a20_0": "重刻醍醐集序",
    "X72n1435_031:0365a21_0": "夫善知識者。",
    "X72n1435_031:0365a21_1": "如優曇鉢花。",
    "X72n1435_031:0365a21_2": "時一現耳。",
    "X72n1435_031:0365a21_3": "豈但難見。",
    "X72n1435_031:0365a21_4": "亦復難遇。",
    "X72n1435_031:0365a22_5": "所以釋迦不現長年。",
    "X72n1435_031:0365a22_6": "促為短壽。",
    "X72n1435_031:0365a22_7": "惟十二分教。",
    "X72n1435_031:0365a22_8": "開眾生眼目。",
    "X72n1435_031:0365a23_9": "色香美味。",
    "X72n1435_031:0365a23_10": "舐之則滿口生津。",
    "X72n1435_031:0365a23_11": "大小偏圓。",
    "X72n1435_031:0365a23_12": "荷之則通身汗出。",
    "X72n1435_031:0365a24_13": "如靈丹一粒。",
    "X72n1435_031:0365a24_14": "點鐵成金。",
    "X72n1435_031:0365a24_15": "至理一言。",
    "X72n1435_031:0365a24_16": "轉凡成聖。",
    "X72n1435_031:0365b01_17": "可謂救貧之至寶。",
    "X72n1435_031:0365b01_18": "奪命之靈符也。",
    "X72n1435_031:0365b01_19": "斗峯寺古音琴禪師者。",
    "X72n1435_031:0365b02_20": "棄世緣如脫敝屣。",
    "X72n1435_031:0365b02_21": "參知識如侍所親。",
    "X72n1435_031:0365b02_22": "歷盡支那。",
    "X72n1435_031:0365b03_23": "不憚百城重蠒。",
    "X72n1435_031:0365b03_24": "揭開寶藏。",
    "X72n1435_031:0365b03_25": "直追古佛家風。",
    "X72n1435_031:0365b03_26": "大法既明。",
    "X72n1435_031:0365b04_27": "襟懷豁爾。",
    "X72n1435_031:0365b04_28": "開言吐語。",
    "X72n1435_031:0365b04_29": "不涉思惟。",
    "X72n1435_031:0365b04_30": "短偈長篇。",
    "X72n1435_031:0365b04_31": "隨聲吐露。",
    "X72n1435_031:0365b05_32": "攪長河為一味。",
    "X72n1435_031:0365b05_33": "揭重霧于千山。",
    "X72n1435_031:0365b05_34": "自覺覺他。",
    "X72n1435_031:0365b05_35": "無門門啟。",
    "X72n1435_031:0365b06_36": "深契釋迦拈花之妙。",
    "X72n1435_031:0365b06_37": "無慙迦葉忍俊之時。",
    "X72n1435_031:0365b06_38": "致使一人傳虗。",
    "X72n1435_031:0365b07_39": "萬人傳實。",
    "X72n1435_031:0365b07_40": "集之曰醍醐。",
    "X72n1435_031:0365b07_41": "開之如鎻鑰。",
    "X72n1435_031:0365b07_42": "履之過氷刃。",
    "X72n1435_031:0365b08_43": "服之若丹砂。",
    "X72n1435_031:0365b08_44": "結世諦良緣。",
    "X72n1435_031:0365b08_45": "洞眾生機感。",
    "X72n1435_031:0365b08_46": "惜乎字傳焉馬。",
    "X72n1435_031:0365b09_47": "文雜自它。",
    "X72n1435_031:0365b09_48": "如不刪定于斯時。",
    "X72n1435_031:0365b09_49": "安可繩墨於後世。",
    "X72n1435_031:0365b10_50": "是以懷中禪人發心。",
    "X72n1435_031:0365b10_51": "就予取正。",
    "X72n1435_031:0365b10_52": "并乞序篇端。",
    "X72n1435_031:0365b11_0": "因略書大槩。",
    "X72n1435_031:0365b11_1": "以示諸同志焉。",
    "X72n1435_031:0365b13_0": "無異禪師廣錄卷第三十一"
}