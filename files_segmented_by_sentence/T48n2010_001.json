[
    {
        "source_sentence": "信心銘",
        "from": "T48n2010_001:0376b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至道無難　　唯嫌揀擇　　但莫憎愛",
        "from": "T48n2010_001:0376b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洞然明白　　毫釐有差　　天地懸隔",
        "from": "T48n2010_001:0376b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得現前　　莫存順逆　　違順相爭",
        "from": "T48n2010_001:0376b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為心病　　不識玄旨　　徒勞念靜",
        "from": "T48n2010_001:0376b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓同太虛　　無欠無餘　　良由取捨",
        "from": "T48n2010_001:0376b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以不如　　莫逐有緣　　勿住空忍",
        "from": "T48n2010_001:0376b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一種平懷　　泯然自盡　　止動歸止",
        "from": "T48n2010_001:0376b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止更彌動　　唯滯兩邊　　寧知一種",
        "from": "T48n2010_001:0376b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一種不通　　兩處失功　　遣有沒有",
        "from": "T48n2010_001:0376b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從空背空　　多言多慮　　轉不相應",
        "from": "T48n2010_001:0376b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕言絕慮　　無處不通　　歸根得旨",
        "from": "T48n2010_001:0376c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨照失宗　　須臾返照　　勝却前空",
        "from": "T48n2010_001:0376c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前空轉變　　皆由妄見　　不用求真",
        "from": "T48n2010_001:0376c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯須息見　　二見不住　　慎勿追尋",
        "from": "T48n2010_001:0376c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔有是非　　紛然失心　　二由一有",
        "from": "T48n2010_001:0376c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一亦莫守　　一心不生　　萬法無咎",
        "from": "T48n2010_001:0376c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無咎無法　　不生不心　　能隨境滅",
        "from": "T48n2010_001:0376c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境逐能沈　　境由能境　　能由境能",
        "from": "T48n2010_001:0376c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲知兩段　　元是一空　　一空同兩",
        "from": "T48n2010_001:0376c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊含萬像　　不見精麁　　寧有偏黨",
        "from": "T48n2010_001:0376c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大道體寬　　無易無難　　小見狐疑",
        "from": "T48n2010_001:0376c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉急轉遲　　執之失度　　心入邪路",
        "from": "T48n2010_001:0376c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放之自然　　體無去住　　任性合道",
        "from": "T48n2010_001:0376c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逍遙絕惱　　繫念乖真　　沈惛不好",
        "from": "T48n2010_001:0376c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不好勞神　　何用疎親　　欲趣一乘",
        "from": "T48n2010_001:0376c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿惡六塵　　六塵不惡　　還同正覺",
        "from": "T48n2010_001:0376c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者無為　　愚人自縛　　法無異法",
        "from": "T48n2010_001:0376c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄自愛著　　將心用心　　豈非大錯",
        "from": "T48n2010_001:0376c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷生寂亂　　悟無好惡　　一切二邊",
        "from": "T48n2010_001:0376c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄自斟酌　　夢幻空華　　何勞把捉",
        "from": "T48n2010_001:0376c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得失是非　　一時放却　　眼若不眠",
        "from": "T48n2010_001:0376c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸夢自除　　心若不異　　萬法一如",
        "from": "T48n2010_001:0376c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一如體玄　　兀爾忘緣　　萬法齊觀",
        "from": "T48n2010_001:0376c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸復自然　　泯其所以　　不可方比",
        "from": "T48n2010_001:0376c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止動無動　　動止無止　　兩既不成",
        "from": "T48n2010_001:0376c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一何有爾　　究竟窮極　　不存軌則",
        "from": "T48n2010_001:0376c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟心平等　　所作俱息　　狐疑盡淨",
        "from": "T48n2010_001:0376c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正信調直　　一切不留　　無可記憶",
        "from": "T48n2010_001:0376c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛明自然　　不勞心力　　非思量處",
        "from": "T48n2010_001:0376c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識情難測　　真如法界　　無他無自",
        "from": "T48n2010_001:0377a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要急相應　　唯言不二　　不二皆同",
        "from": "T48n2010_001:0377a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不包容　　十方智者　　皆入此宗",
        "from": "T48n2010_001:0377a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗非促延一念萬年萬年一念　　無在不在",
        "from": "T48n2010_001:0377a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方目前　　極小同大　　妄絕境界",
        "from": "T48n2010_001:0377a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極大同小　　不見邊表　　有即是無",
        "from": "T48n2010_001:0377a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無即是有　　若不如是　　必不須守",
        "from": "T48n2010_001:0377a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一即一切　　一切即一　　但能如是",
        "from": "T48n2010_001:0377a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何慮不畢　　信心不二　　不二信心",
        "from": "T48n2010_001:0377a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言語道斷　　非去來今",
        "from": "T48n2010_001:0377a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心銘之終",
        "from": "T48n2010_001:0377a11_100",
        "context_with_next_sentence": false
    }
]