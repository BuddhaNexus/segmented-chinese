[
    {
        "source_sentence": "大乘唯識論一卷",
        "from": "T31n1589_001:0070c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天親菩薩造",
        "from": "T31n1589_001:0070c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陳天竺三藏真諦譯",
        "from": "T31n1589_001:0070c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修道不共他，　　能說無等義，",
        "from": "T31n1589_001:0070c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮大乘理，　　當說立及破。",
        "from": "T31n1589_001:0070c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量佛所修，　　除障及根本，",
        "from": "T31n1589_001:0070c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯識自性靜，　　昧劣人不信。",
        "from": "T31n1589_001:0070c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大乘中立三界唯有識，如經言：",
        "from": "T31n1589_001:0070c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子！",
        "from": "T31n1589_001:0070c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界者唯有心。",
        "from": "T31n1589_001:0070c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心意識等是總名，應知此心有相應法。",
        "from": "T31n1589_001:0070c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯言者，為除色塵等。",
        "from": "T31n1589_001:0070c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實無有外塵，　　似塵識生故，",
        "from": "T31n1589_001:0070c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如瞖眼人，　　見毛二月等。",
        "from": "T31n1589_001:0070c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘中立義，外塵實無所有。",
        "from": "T31n1589_001:0070c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾，云何見有外塵？",
        "from": "T31n1589_001:0071a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為證此義，故言「似塵識生故」。",
        "from": "T31n1589_001:0071a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由識似塵現故，眾生於無塵中見塵。",
        "from": "T31n1589_001:0071a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為顯此識，故立斯譬，如眼有病及眼根亂，於無物中識似二月及鹿渴等而現。",
        "from": "T31n1589_001:0071a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯識義亦如是，是故三界實無外塵，識轉似塵顯。",
        "from": "T31n1589_001:0071a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三性二諦同無性性，名非安立。",
        "from": "T31n1589_001:0071a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處時悉無定，　　無相續不定，",
        "from": "T31n1589_001:0071a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作事悉不成，　　若唯識無塵。",
        "from": "T31n1589_001:0071a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此偈欲顯何義？",
        "from": "T31n1589_001:0071a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若離六塵色等識生，不從塵生，何因此識有處得生，非一切處生？",
        "from": "T31n1589_001:0071a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此處中或生不生，而不恒生？",
        "from": "T31n1589_001:0071a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若眾人同在一時一處，是識不定相續生，非隨一人。",
        "from": "T31n1589_001:0071a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人眼有瞖見毛二月等，餘人則不見。",
        "from": "T31n1589_001:0071a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有何因，瞖眼人所見髮蠅等塵不能作髮蠅等事，餘塵能作？",
        "from": "T31n1589_001:0071a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又夢中所得飲食衣服毒藥刀杖等，不能作飲食等事餘物能作。",
        "from": "T31n1589_001:0071a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又乾闥婆城實非有不能作城事，餘城能作。",
        "from": "T31n1589_001:0071a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若同無塵，是四種義云何不同？",
        "from": "T31n1589_001:0071a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故離塵，定處、定時、不定相續及作事，是四義悉不成。",
        "from": "T31n1589_001:0071a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非不成，定處等義成，如夢。",
        "from": "T31n1589_001:0071a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何夢中離諸塵？",
        "from": "T31n1589_001:0071a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有處或見國園男女等，非一切處。",
        "from": "T31n1589_001:0071a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或是處中，有時見、有時不見，而不恒見。",
        "from": "T31n1589_001:0071a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故離塵，定處定時得成立。",
        "from": "T31n1589_001:0071a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如餓鬼續不定，如餓鬼相續不定得成。",
        "from": "T31n1589_001:0071a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得成？",
        "from": "T31n1589_001:0071a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切同見膿河等。",
        "from": "T31n1589_001:0071a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "膿遍滿河故名膿河，猶如酥甕。",
        "from": "T31n1589_001:0071a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓鬼同業報位故，一切悉見膿等遍滿河中，非一。",
        "from": "T31n1589_001:0071a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如見膿河，餘糞穢等河亦爾。",
        "from": "T31n1589_001:0071a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見有人捉持刀杖遮護，不令得近。",
        "from": "T31n1589_001:0071a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此唯識相續不定，離塵得成，如夢害作事。",
        "from": "T31n1589_001:0071a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如夢離男女交會出不淨，為相夢害得成，作事亦爾。",
        "from": "T31n1589_001:0071b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此喻，各各譬處時定等四義得成。",
        "from": "T31n1589_001:0071b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次如地獄，一切由地獄譬，四義得成立。",
        "from": "T31n1589_001:0071b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得成？",
        "from": "T31n1589_001:0071b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見獄卒及共受逼害。",
        "from": "T31n1589_001:0071b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如地獄中諸受罪人見獄卒等，定處定時見狗烏山等來，平等見，非一。",
        "from": "T31n1589_001:0071b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受逼害亦爾，實無獄卒等，由同業報增上緣故，餘處亦如是。",
        "from": "T31n1589_001:0071b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此通譬，四義得成。",
        "from": "T31n1589_001:0071b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故獄卒狗烏等不許是實眾生？",
        "from": "T31n1589_001:0071b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無道理故。",
        "from": "T31n1589_001:0071b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是獄卒不成地獄道受罪人故，如地獄苦不能受故。",
        "from": "T31n1589_001:0071b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼地獄人更互相害，云何得分別此是地獄人、彼是獄卒？",
        "from": "T31n1589_001:0071b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若同形貌力量，無更互相怖畏義。",
        "from": "T31n1589_001:0071b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於赤鐵地火焰恒起，彼自不能忍受燒燃苦，云何於中能逼害他？",
        "from": "T31n1589_001:0071b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼非地獄人，云何得生地獄中？",
        "from": "T31n1589_001:0071b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何畜生得生天上？",
        "from": "T31n1589_001:0071b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是地獄畜生及餓鬼別類等生地獄中名為獄卒，是事不然。",
        "from": "T31n1589_001:0071b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如畜生生天，　　地獄無雜道，",
        "from": "T31n1589_001:0071b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄中苦報，　　由彼不能受。",
        "from": "T31n1589_001:0071b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若畜生生天，由雜業能感起世界樂，生中受天樂報。",
        "from": "T31n1589_001:0071b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獄卒等不爾，不受地獄苦報故，是故畜生及餓鬼無道理得生地獄中。",
        "from": "T31n1589_001:0071b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由罪人業故，　　似獄卒等生，",
        "from": "T31n1589_001:0071b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若許彼變異，　　於識何不許？",
        "from": "T31n1589_001:0071b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由地獄人業報故，四大別類，生獄卒等種種差別顯現色形量異，說名獄卒等。",
        "from": "T31n1589_001:0071b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變異亦爾，或顯現動搖手足等，生彼怖畏作殺害事。",
        "from": "T31n1589_001:0071b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有兩山相似羺羊乍合乍離，鐵樹林中鐵樹利刺或低或竪，彼言不無此事。",
        "from": "T31n1589_001:0071b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故不許由識起業識有變異，而說是四大有此變異？",
        "from": "T31n1589_001:0071b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次。",
        "from": "T31n1589_001:0071b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業熏習識內，　　執果生於外，",
        "from": "T31n1589_001:0071c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何因熏習處，　　於中不說果？",
        "from": "T31n1589_001:0071c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是罪人業，於地獄中能見如此等事四大聚及其變異。",
        "from": "T31n1589_001:0071c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此業熏習在地獄人識相續中，不在餘處。",
        "from": "T31n1589_001:0071c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此熏習處是識變異似獄卒等，是業果報而不許在本處，非熏習處而許業果生，何因作如此執？",
        "from": "T31n1589_001:0071c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿含是因。",
        "from": "T31n1589_001:0071c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若但識似色等塵生，無色等外塵，佛世尊不應說實有色等諸入。",
        "from": "T31n1589_001:0071c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此阿含非因，以非阿含意故。",
        "from": "T31n1589_001:0071c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色等入有教，　　為化執我人，",
        "from": "T31n1589_001:0071c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由隨別意說，　　如說化生生。",
        "from": "T31n1589_001:0071c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛世尊說有化生眾生，由別意故說幻相續不斷乃至來生。",
        "from": "T31n1589_001:0071c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次佛說：",
        "from": "T31n1589_001:0071c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「無眾生及我，　　但法有因果。",
        "from": "T31n1589_001:0071c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」由此別說，知是別教。",
        "from": "T31n1589_001:0071c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛世尊說色等諸入亦如是，為度宜聞說入眾生。",
        "from": "T31n1589_001:0071c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說依教意，別教意云何？",
        "from": "T31n1589_001:0071c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識自種子生，　　顯現起似塵，",
        "from": "T31n1589_001:0071c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成內外入，　　故佛說此二。",
        "from": "T31n1589_001:0071c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此偈欲顯何義？",
        "from": "T31n1589_001:0071c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似塵識從自種子勝類變異生，是種子及似塵顯現，為似色識生方便門故。",
        "from": "T31n1589_001:0071c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛世尊次第說眼入色入乃至似觸識，從自種子至變異差別生是種子及似觸，顯現為觸識生方便門，故佛世尊說為身入及觸入。",
        "from": "T31n1589_001:0071c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約此義說入，有何利益？",
        "from": "T31n1589_001:0071c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若他依此教，　　得入人無我，",
        "from": "T31n1589_001:0071c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由別教能除，　　分別入法空。",
        "from": "T31n1589_001:0071c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛世尊由此義說諸入，受化弟子得入人空。",
        "from": "T31n1589_001:0071c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從唯六雙但六識生，無一法為見者乃至為觸者。",
        "from": "T31n1589_001:0072a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若知此義說人空，所化弟子得入人我空。",
        "from": "T31n1589_001:0072a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由別說者，由說唯識教得入法我空。",
        "from": "T31n1589_001:0072a02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得入法空？",
        "from": "T31n1589_001:0072a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法唯識生似色塵等，無有一法色等為相。",
        "from": "T31n1589_001:0072a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若知如此得入法空。",
        "from": "T31n1589_001:0072a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一切法一向無，是唯識亦應無，云何得成立？",
        "from": "T31n1589_001:0072a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非一切法一向無說為法空，非知此義名入法空。",
        "from": "T31n1589_001:0072a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾，云何得入法空？",
        "from": "T31n1589_001:0072a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由除分別性相故得入法空。",
        "from": "T31n1589_001:0072a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如凡夫分別所有法相，由此法相一切法空無所有，是名法空，不由不可言體諸佛境界說諸法空。",
        "from": "T31n1589_001:0072a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此唯識由別識所分別，體無所有故空。",
        "from": "T31n1589_001:0072a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入此理，得成立唯識入法我空，不由撥一切法無。",
        "from": "T31n1589_001:0072a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不如此，別識應成別識境，唯識義則不成，識塵實有故。",
        "from": "T31n1589_001:0072a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云何可信？",
        "from": "T31n1589_001:0072a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此義，佛世尊說色等入是有，不由實有色等入為眼識等境界。",
        "from": "T31n1589_001:0072a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如此理，是義可信。",
        "from": "T31n1589_001:0072a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外塵與隣虛，　　不一亦不異，",
        "from": "T31n1589_001:0072a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼聚亦非塵，　　隣虛不成故。",
        "from": "T31n1589_001:0072a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此偈欲顯何義？",
        "from": "T31n1589_001:0072a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是色等入各各是眼識等境，為當與隣虛一，如有分色鞞世師所執？",
        "from": "T31n1589_001:0072a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為當不一，由隣虛各別故？",
        "from": "T31n1589_001:0072a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為當是隣虛聚色入，與隣虛成一作眼識境？",
        "from": "T31n1589_001:0072a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是義不然。",
        "from": "T31n1589_001:0072a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是有分色於分中不可見異體故，亦非多隣虛各各不可見故，亦非多隣虛聚集成塵，由隣虛不成一物故。",
        "from": "T31n1589_001:0072a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何不成？",
        "from": "T31n1589_001:0072a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時六共聚，　　隣虛成六方，",
        "from": "T31n1589_001:0072a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若六同一處，　　聚量如隣虛。",
        "from": "T31n1589_001:0072a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有六隣虛從六方來，與一隣虛共聚。",
        "from": "T31n1589_001:0072a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是一隣虛不成一物，有六方分故。",
        "from": "T31n1589_001:0072a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是一隣虛處，他方隣虛不得住故。",
        "from": "T31n1589_001:0072b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一隣虛處即是六處，一切同一處故，則一切聚物量同隣虛，更互不相過故。",
        "from": "T31n1589_001:0072b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如隣虛量，聚亦不應可見。",
        "from": "T31n1589_001:0072b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若汝言隣虛不得聚集，無方分故，此過失不得起。",
        "from": "T31n1589_001:0072b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是隣虛聚更互相應，罽賓國毘婆沙師作如此說，則應問之。",
        "from": "T31n1589_001:0072b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所說隣虛聚物，此聚不異隣虛。",
        "from": "T31n1589_001:0072b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若隣虛不合，　　聚中誰和合？",
        "from": "T31n1589_001:0072b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次無方分，　　隣虛聚不成。",
        "from": "T31n1589_001:0072b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若隣虛無和合，於聚中此和合屬何法？",
        "from": "T31n1589_001:0072b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若汝言隣虛更互得和合。",
        "from": "T31n1589_001:0072b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此義不然。",
        "from": "T31n1589_001:0072b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T31n1589_001:0072b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隣虛無方分故。",
        "from": "T31n1589_001:0072b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若和合不成，何況有假名聚？",
        "from": "T31n1589_001:0072b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應如此說。",
        "from": "T31n1589_001:0072b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聚有方分，若和合義不可立，無方分隣虛云何和合得成？",
        "from": "T31n1589_001:0072b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故隣虛不成一物。",
        "from": "T31n1589_001:0072b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隣虛和合，若可然、若不可然，今所不論。",
        "from": "T31n1589_001:0072b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若物有方分，　　不應成一物。",
        "from": "T31n1589_001:0072b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隣虛東方分異餘五方，乃至下方分亦如是。",
        "from": "T31n1589_001:0072b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若分有異，隣虛取分為體，云何得成一物？",
        "from": "T31n1589_001:0072b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "影障復云何？",
        "from": "T31n1589_001:0072b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一隣虛無有方分，日正出時，云何一邊有影？",
        "from": "T31n1589_001:0072b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故作如此問？",
        "from": "T31n1589_001:0072b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是隣虛無有別分正為日所照。",
        "from": "T31n1589_001:0072b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次此隣虛與彼隣虛若並無方分，云何相障？",
        "from": "T31n1589_001:0072b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T31n1589_001:0072b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此隣虛無有餘分是處相合他來則障。",
        "from": "T31n1589_001:0072b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無有障，一切六方隣虛同一處故，則一切聚同隣虛量，此義已如前說。",
        "from": "T31n1589_001:0072b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是影及障屬聚不屬隣虛，云何不許此義？",
        "from": "T31n1589_001:0072b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今許聚是有異隣虛不？",
        "from": "T31n1589_001:0072b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說影障屬聚耶不也？",
        "from": "T31n1589_001:0072b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若同則無二，若聚不異隣虛。",
        "from": "T31n1589_001:0072b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此影及障則不屬聚。",
        "from": "T31n1589_001:0072b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T31n1589_001:0072b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但形相分別謂之為聚，何用作此思量。",
        "from": "T31n1589_001:0072c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是色等諸塵體相未破，何者為其體？",
        "from": "T31n1589_001:0072c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼等境界及青等類，此義即應共思量。",
        "from": "T31n1589_001:0072c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此眼等境界及青等類，汝執為塵體，為是多物、為是一物？",
        "from": "T31n1589_001:0072c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾有何失？",
        "from": "T31n1589_001:0072c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若多者，其失如前；",
        "from": "T31n1589_001:0072c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一者，亦有過。",
        "from": "T31n1589_001:0072c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈言：",
        "from": "T31n1589_001:0072c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一無次行，　　俱無已未得，",
        "from": "T31n1589_001:0072c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及別類多事，　　亦無細難見。",
        "from": "T31n1589_001:0072c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一切青黃等無有隔別，是眼境界執為一物，於地則無次第行。",
        "from": "T31n1589_001:0072c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一下足，應遍行一切。",
        "from": "T31n1589_001:0072c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此間已得、彼處未得，於一時中此二不成。",
        "from": "T31n1589_001:0072c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T31n1589_001:0072c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時中一物，不應有已得、未得，不應有多別類如象馬等軍，亦不應有多別事。",
        "from": "T31n1589_001:0072c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T31n1589_001:0072c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是一物處多物則在其中，此彼差別云何得成？",
        "from": "T31n1589_001:0072c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次云何為一，是二所至中間則空？",
        "from": "T31n1589_001:0072c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次是最細水蟲與大同色，無不可見義。",
        "from": "T31n1589_001:0072c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若汝由相差別色等諸塵，執有別物，不由別義。",
        "from": "T31n1589_001:0072c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾，決定約隣虛別類，應分別塵差別，則隣虛不成一物。",
        "from": "T31n1589_001:0072c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色等五塵非眼等境界，是故唯識義得成。",
        "from": "T31n1589_001:0072c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸塵者，謂識及識法為體，離能取所取故無增、立正因果故不減，無無因及不平等因，二空及十二緣生即是其自性。",
        "from": "T31n1589_001:0072c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈言：",
        "from": "T31n1589_001:0072c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是有是無由依諸量可決是非，一切量中證量最勝。",
        "from": "T31n1589_001:0072c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若塵實無，如此證智云何得起？",
        "from": "T31n1589_001:0072c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂我證如此。",
        "from": "T31n1589_001:0072c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證智如夢中。",
        "from": "T31n1589_001:0072c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如夢時離塵見山樹等色，無有外塵。",
        "from": "T31n1589_001:0072c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證智亦如此。",
        "from": "T31n1589_001:0072c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時如證智，　　是時不見塵，",
        "from": "T31n1589_001:0072c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何塵可證？",
        "from": "T31n1589_001:0072c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所說，證智起時謂我如此證。",
        "from": "T31n1589_001:0073a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此時中汝不得見塵，但意識分別，眼識已滅故，是塵云何可證？",
        "from": "T31n1589_001:0073a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人說剎那滅，此人是時執色乃至觸已謝。",
        "from": "T31n1589_001:0073a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問：",
        "from": "T31n1589_001:0073a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若非五識所量，意不能憶持，是故五塵決定是五識所量。",
        "from": "T31n1589_001:0073a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量者是名見，是故色等六塵說是所證。",
        "from": "T31n1589_001:0073a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答：",
        "from": "T31n1589_001:0073a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是義不然，謂先已證塵，後方憶持。",
        "from": "T31n1589_001:0073a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T31n1589_001:0073a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說似塵識。",
        "from": "T31n1589_001:0073a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離色等六塵，眼等六識似六塵起。",
        "from": "T31n1589_001:0073a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此義如前說。",
        "from": "T31n1589_001:0073a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此生憶持。",
        "from": "T31n1589_001:0073a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此似塵識有，分別意識與憶持相應，似前所起之塵後時得生，是故不可執由憶持起，謂先以識證塵。",
        "from": "T31n1589_001:0073a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如夢中，識無塵得起覺時。",
        "from": "T31n1589_001:0073a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾，如世人自知夢識無塵，亦應自知覺識無塵。",
        "from": "T31n1589_001:0073a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既無此事，故知覺時所見塵，異夢中所見。",
        "from": "T31n1589_001:0073a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次夢有更起義，覺時則不爾，非一切無塵。",
        "from": "T31n1589_001:0073a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答：",
        "from": "T31n1589_001:0073a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此言非證。",
        "from": "T31n1589_001:0073a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢見塵非有，　　未覺不能知。",
        "from": "T31n1589_001:0073a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是虛妄分別串習惛熟，世人見非實塵如夢所見謂為實有；",
        "from": "T31n1589_001:0073a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺則不爾，如實能解夢塵非有。",
        "from": "T31n1589_001:0073a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是若觀行人修出世治道得無分別智，入非安立聖諦見位得覺悟，是時無分別智、後得清淨世智如理見六塵實無所有，此義平等。",
        "from": "T31n1589_001:0073a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若由自相續轉異勝故，眾生六識似六塵起，實不從塵生者，由事善惡友、聽受正邪二法，眾生有正邪二定。",
        "from": "T31n1589_001:0073a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得成？",
        "from": "T31n1589_001:0073a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若所親近及說實無。",
        "from": "T31n1589_001:0073a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更互增上故，　　二識正邪定。",
        "from": "T31n1589_001:0073a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生由更互識增上故，有二種識定成，或正定、或邪定。",
        "from": "T31n1589_001:0073b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更互者，自他共成自他事。",
        "from": "T31n1589_001:0073b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故別識相續勝能故，別識相續勝能生，不從外塵起。",
        "from": "T31n1589_001:0073b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如夢識無境界，覺識亦如此者，云何夢覺二人行善作惡，愛憎兩果未來不同？",
        "from": "T31n1589_001:0073b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢識由眠壞，　　未來果不同。",
        "from": "T31n1589_001:0073b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是正因能令夢心無有果報，謂惛睡所壞故，心弱不能成善惡業。",
        "from": "T31n1589_001:0073b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問：",
        "from": "T31n1589_001:0073b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一切唯有識，則無身及言。",
        "from": "T31n1589_001:0073b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何牛羊等畜生，非屠兒所害而死？",
        "from": "T31n1589_001:0073b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼死非屠兒所作，屠兒云何得殺生罪？",
        "from": "T31n1589_001:0073b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰：",
        "from": "T31n1589_001:0073b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由他識變異，　　死事於此成，",
        "from": "T31n1589_001:0073b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如他失心等，　　因鬼等心力。",
        "from": "T31n1589_001:0073b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如鬼神等心變異故，令他或失念、或得夢、或著鬼等，諸變異得成。",
        "from": "T31n1589_001:0073b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有神通人心願故，有如此事。",
        "from": "T31n1589_001:0073b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如娑羅那王等得夢，由大迦旃延心願故。",
        "from": "T31n1589_001:0073b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿蘭若仙人瞋心故，毘摩質多羅王見怖畏事。",
        "from": "T31n1589_001:0073b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是由他識變異，能斷他命根。",
        "from": "T31n1589_001:0073b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因此事故，同類相續斷，說名為死，此義應知。",
        "from": "T31n1589_001:0073b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次：",
        "from": "T31n1589_001:0073b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何檀陀林，　　空寂由仙瞋？",
        "from": "T31n1589_001:0073b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若由他識變異增上不許眾生死，世尊成立心重罰最為大罪，問優婆離長者：",
        "from": "T31n1589_001:0073b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者！",
        "from": "T31n1589_001:0073b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝曾聞不？",
        "from": "T31n1589_001:0073b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何檀陀柯林、迦陵伽林、摩登伽林空寂清淨？",
        "from": "T31n1589_001:0073b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者答言：",
        "from": "T31n1589_001:0073b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞿曇！",
        "from": "T31n1589_001:0073b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾聞由仙人瞋心。",
        "from": "T31n1589_001:0073b25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心重罰大罪，　　若爾云何成？",
        "from": "T31n1589_001:0073b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若汝執有諸鬼神愛敬仙人故，殺害此中眾生，不由仙人瞋心。",
        "from": "T31n1589_001:0073b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾，云何由此業心重罰大罪，劇於身口重罰？",
        "from": "T31n1589_001:0073b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由仙人瞋心故，如是多眾生死故，心重罰成大罪。",
        "from": "T31n1589_001:0073c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一切唯識，他心通人為知他心、為不知？",
        "from": "T31n1589_001:0073c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾有何所以？",
        "from": "T31n1589_001:0073c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不知，云何得他心通？",
        "from": "T31n1589_001:0073c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若知，云何言識無境？",
        "from": "T31n1589_001:0073c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他心通人智，　　不如境云何？",
        "from": "T31n1589_001:0073c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如知自心故，　　不知如佛境。",
        "from": "T31n1589_001:0073c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是他心智境，云何不如？",
        "from": "T31n1589_001:0073c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由無智故。",
        "from": "T31n1589_001:0073c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不可言體，他心則成，佛境如此，不能知故。",
        "from": "T31n1589_001:0073c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此二境界不如，非是如此顯現故，能取所取分別未滅故。",
        "from": "T31n1589_001:0073c08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此唯識理無窮，簡擇品類甚深無底。",
        "from": "T31n1589_001:0073c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就唯識理，　　我造隨自能，",
        "from": "T31n1589_001:0073c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理及如量，　　難思佛等境。",
        "from": "T31n1589_001:0073c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等作一切功用，不能思度此理，此理非覺觀所緣故。",
        "from": "T31n1589_001:0073c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何人能遍通達此境？",
        "from": "T31n1589_001:0073c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是佛境界。",
        "from": "T31n1589_001:0073c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T31n1589_001:0073c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛世尊於一切法知無礙故，如量如理，此境唯佛所見。",
        "from": "T31n1589_001:0073c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆藪槃豆菩薩造唯識論竟。",
        "from": "T31n1589_001:0073c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提留支法師，先於北翻出《唯識論》。",
        "from": "T31n1589_001:0073c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧愷以陳天嘉四年歲次癸未正月十六日，於廣州制旨寺，請三藏法師拘羅那他重譯此論，行翻行講，至三月五日方竟。",
        "from": "T31n1589_001:0073c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此論外國本有義疏，翻得兩卷。",
        "from": "T31n1589_001:0073c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏法師更釋本文，慧愷注記，又得兩卷。",
        "from": "T31n1589_001:0073c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末有僧忍法師，從晉安齎舊本達番禺，愷取新文對讎校舊本，大意雖復略同，偈語有異；",
        "from": "T31n1589_001:0073c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長行解釋，詞繁義闕；",
        "from": "T31n1589_001:0073c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論初無歸敬，有識君子宜善尋之。",
        "from": "T31n1589_001:0073c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今謹別抄偈文安於論後，庶披閱者為易耳。",
        "from": "T31n1589_001:0073c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此論是佛法正義，外國盛弘。",
        "from": "T31n1589_001:0073c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　沙門慧愷記。",
        "from": "T31n1589_001:0073c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修道不共他，　　能說無等義，",
        "from": "T31n1589_001:0073c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮大乘理，　　當說立及破。",
        "from": "T31n1589_001:0073c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量佛所修，　　除障及根本，",
        "from": "T31n1589_001:0074a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯識自性靜，　　昧劣人不樂。",
        "from": "T31n1589_001:0074a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實無有外塵，　　似塵識生故，",
        "from": "T31n1589_001:0074a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如瞖眼人，　　見毛兩月等。",
        "from": "T31n1589_001:0074a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處時悉無定，　　無相續不定，",
        "from": "T31n1589_001:0074a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作事悉不成，　　若唯識無塵。",
        "from": "T31n1589_001:0074a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定處等義成，　　如夢如餓鬼，",
        "from": "T31n1589_001:0074a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "續不定一切，　　同見膿河等。",
        "from": "T31n1589_001:0074a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如夢害作事，　　復次如地獄，",
        "from": "T31n1589_001:0074a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切見獄卒，　　及共受逼害。",
        "from": "T31n1589_001:0074a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如畜生生天，　　地獄無雜道，",
        "from": "T31n1589_001:0074a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄中苦報，　　由彼不能受。",
        "from": "T31n1589_001:0074a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由罪人業故，　　似獄卒等生，",
        "from": "T31n1589_001:0074a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若許彼變異，　　於彼何不許？",
        "from": "T31n1589_001:0074a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業熏習識內，　　執果生於外，",
        "from": "T31n1589_001:0074a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何因熏習處，　　於中不說果？",
        "from": "T31n1589_001:0074a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色等入有教，　　為化執我人，",
        "from": "T31n1589_001:0074a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由隨別意說，　　如說化生生。",
        "from": "T31n1589_001:0074a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識自種子生，　　顯現起似塵，",
        "from": "T31n1589_001:0074a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成內外入，　　故佛說此二。",
        "from": "T31n1589_001:0074a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若他依此教，　　得入人無我，",
        "from": "T31n1589_001:0074a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由別教能除，　　分別入法空。",
        "from": "T31n1589_001:0074a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外塵與隣虛，　　不一亦不異，",
        "from": "T31n1589_001:0074a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼聚亦非塵，　　隣虛不成故。",
        "from": "T31n1589_001:0074a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時六共聚，　　隣虛成六方，",
        "from": "T31n1589_001:0074a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若六同一處，　　聚量如隣虛。",
        "from": "T31n1589_001:0074a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若隣虛不合，　　聚中誰和合？",
        "from": "T31n1589_001:0074a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次無方分，　　隣虛聚不成。",
        "from": "T31n1589_001:0074a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若物有方分，　　不應成一物，",
        "from": "T31n1589_001:0074a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "影障復云何？",
        "from": "T31n1589_001:0074b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若同則無二。",
        "from": "T31n1589_001:0074b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一無次行，　　俱無已未得，",
        "from": "T31n1589_001:0074b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及別類多事，　　亦無細難見。",
        "from": "T31n1589_001:0074b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證智如夢中，　　是時如證智，",
        "from": "T31n1589_001:0074b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時不見塵，　　云何塵可證？",
        "from": "T31n1589_001:0074b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說似塵識，　　從此生憶持，",
        "from": "T31n1589_001:0074b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢見塵非有，　　未覺不能知。",
        "from": "T31n1589_001:0074b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更互增上故，　　二識正邪定，",
        "from": "T31n1589_001:0074b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢識由眠壞，　　未來果不同。",
        "from": "T31n1589_001:0074b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由他識變異，　　死事於此成，",
        "from": "T31n1589_001:0074b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如他失心等，　　因鬼等心力。",
        "from": "T31n1589_001:0074b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何檀陀林，　　空寂由仙瞋？",
        "from": "T31n1589_001:0074b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心重罰大罪，　　若爾云何成？",
        "from": "T31n1589_001:0074b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他心通人智，　　不如境云何？",
        "from": "T31n1589_001:0074b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如知自心故，　　不知如佛境。",
        "from": "T31n1589_001:0074b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就唯識理，　　我造隨自能，",
        "from": "T31n1589_001:0074b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理及如量，　　難思佛等境。",
        "from": "T31n1589_001:0074b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘唯識論",
        "from": "T31n1589_001:0074b18_100",
        "context_with_next_sentence": false
    }
]