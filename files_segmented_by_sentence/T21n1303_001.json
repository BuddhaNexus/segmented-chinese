[
    {
        "source_sentence": "佛說聖曜母陀羅尼經",
        "from": "T21n1303_001:0421a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T21n1303_001:0421a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教大師臣法天奉　詔譯",
        "from": "T21n1303_001:0421a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1303_001:0421a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在阿拏迦嚩帝大城。",
        "from": "T21n1303_001:0421a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時有無數天龍夜叉乾闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人。",
        "from": "T21n1303_001:0421a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及木星火星金星水星土星。",
        "from": "T21n1303_001:0421a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太陰太陽羅睺計都。",
        "from": "T21n1303_001:0421a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等二十七曜恭敬圍遶。",
        "from": "T21n1303_001:0421a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大金剛三昧莊嚴道場。",
        "from": "T21n1303_001:0421a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有無數千菩薩摩訶薩眾。",
        "from": "T21n1303_001:0421a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰金剛手菩薩金剛忿怒菩薩。",
        "from": "T21n1303_001:0421a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛軍菩薩金剛播尼菩薩。",
        "from": "T21n1303_001:0421a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛主菩薩金剛莊嚴菩薩。",
        "from": "T21n1303_001:0421a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛明菩薩金剛敷菩薩。",
        "from": "T21n1303_001:0421b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩普觀世菩薩。",
        "from": "T21n1303_001:0421b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉祥菩薩蓮華幢菩薩。",
        "from": "T21n1303_001:0421b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華藏菩薩蓮華目菩薩。",
        "from": "T21n1303_001:0421b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏菩薩文殊師利法王子菩薩摩訶薩。",
        "from": "T21n1303_001:0421b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等諸大菩薩恭敬圍遶。",
        "from": "T21n1303_001:0421b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛為說法初善中善後善。",
        "from": "T21n1303_001:0421b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其義深遠其語巧妙。",
        "from": "T21n1303_001:0421b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "純一無雜具足清白莊嚴如意。",
        "from": "T21n1303_001:0421b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T21n1303_001:0421b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起以神通力。",
        "from": "T21n1303_001:0421b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞世尊無數百千匝。",
        "from": "T21n1303_001:0421b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭面作禮結跏趺坐。",
        "from": "T21n1303_001:0421b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨眼觀彼大眾。",
        "from": "T21n1303_001:0421b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作金剛合掌安向心間。",
        "from": "T21n1303_001:0421b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白世尊言。",
        "from": "T21n1303_001:0421b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有諸宿曜形貌麁惡。",
        "from": "T21n1303_001:0421b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心多忿怒惱害眾生。",
        "from": "T21n1303_001:0421b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或斷命根或耗人財寶。",
        "from": "T21n1303_001:0421b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或減人精神或促人年壽。",
        "from": "T21n1303_001:0421b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是損惱一切眾生。",
        "from": "T21n1303_001:0421b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願世尊說正密法為作擁護。",
        "from": "T21n1303_001:0421b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉善哉。",
        "from": "T21n1303_001:0421b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝能慈愍利益一切眾生。",
        "from": "T21n1303_001:0421b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問於如來最上祕密之法。",
        "from": "T21n1303_001:0421b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽善思念之。",
        "from": "T21n1303_001:0421b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為汝說金剛手。",
        "from": "T21n1303_001:0421b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸惡宿曜。",
        "from": "T21n1303_001:0421b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及天龍夜叉乾闥婆阿脩羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T21n1303_001:0421b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以最上閼伽。",
        "from": "T21n1303_001:0421b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及音樂等。",
        "from": "T21n1303_001:0421b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法加持一一供養。",
        "from": "T21n1303_001:0421b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼歡喜滅除諸惡。",
        "from": "T21n1303_001:0421b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時釋迦牟尼佛。",
        "from": "T21n1303_001:0421b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自心中出大光明。",
        "from": "T21n1303_001:0421b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名慈悲光。",
        "from": "T21n1303_001:0421b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入諸宿曜頂。",
        "from": "T21n1303_001:0421b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那之間一切宿曜及日月等。",
        "from": "T21n1303_001:0421b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起頭面禮足。",
        "from": "T21n1303_001:0421b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地合掌恭敬白佛言。",
        "from": "T21n1303_001:0421b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來應正等覺。",
        "from": "T21n1303_001:0421b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願賜攝受為說正法。",
        "from": "T21n1303_001:0421b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等若聞擁護有情令無災害。",
        "from": "T21n1303_001:0421b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有禁縛刀劍毒蟲一切不害。",
        "from": "T21n1303_001:0421b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我結地界而為守護。",
        "from": "T21n1303_001:0421b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦如來。",
        "from": "T21n1303_001:0421b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說供養宿曜真言。",
        "from": "T21n1303_001:0421b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵銘引齲引攞迦二合引野娑嚩二合引賀引唵引尸引旦引舍尾引娑嚩二合引賀引唵引洛訖旦二合引誐俱麼引囉野娑嚩二合引賀引唵引󰂛引馱野󰂛引馱野娑嚩二合引賀引唵引步引誐引娑波二合那野娑嚩二合引賀引唵引阿穌囉薩多麼引野娑嚩二合引賀引唵引訖里二合瑟拏二合嚩囉拏二合引野娑嚩二合引賀引唵引阿沒里二合多鉢里二合夜野娑嚩二合引賀引唵引乳引底計引多吠引娑嚩二合引賀引爾時世尊說真言已。",
        "from": "T21n1303_001:0421c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩言。",
        "from": "T21n1303_001:0421c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是九曜真言。",
        "from": "T21n1303_001:0421c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念者皆得成就。",
        "from": "T21n1303_001:0421c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須依法以香水。",
        "from": "T21n1303_001:0421c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗曼拏羅闊十二指。",
        "from": "T21n1303_001:0421c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或金銀器或銅器瓦器等。",
        "from": "T21n1303_001:0421c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻閼伽供養星曜。",
        "from": "T21n1303_001:0421c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用前真言各念一百八遍。",
        "from": "T21n1303_001:0421c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求之事而悉成就。",
        "from": "T21n1303_001:0421c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手菩薩。",
        "from": "T21n1303_001:0421c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今復說陀羅尼名聖曜母。",
        "from": "T21n1303_001:0421c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大明力能為擁護。",
        "from": "T21n1303_001:0421c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切宿曜聞悉歡喜。",
        "from": "T21n1303_001:0421c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有苾芻苾芻尼優婆塞優婆夷。",
        "from": "T21n1303_001:0421c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此經典於曼拏羅獻閼伽供養。",
        "from": "T21n1303_001:0421c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此真言七遍。",
        "from": "T21n1303_001:0421c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得富貴長壽。",
        "from": "T21n1303_001:0421c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若日日持誦彼一切宿曜。",
        "from": "T21n1303_001:0421c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿有情一切意願。",
        "from": "T21n1303_001:0421c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿曜母陀羅尼曰。",
        "from": "T21n1303_001:0421c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引囉怛曩二合怛囉二合夜野曩謨引沒馱野曩謨二合嚩日囉二合馱囉引野曩謨鉢捺麼二合馱囉引野曩謨薩嚩仡囉二合賀引𧹞薩嚩商引波哩布囉迦引𧹞引曩謨引諾乞叉二合怛囉二合𧹞曩謨引訥嚩二合引那舍囉引尸引南引怛儞也二合他引唵引沒第引嚩日里二合引嚩日里二合引鉢捺銘二合引娑囉娑囉鉢囉二合娑囉鉢囉二合娑囉三麼二合囉三麼二合囉託里二合引拏野訖里二合引拏野末里那二合野伽引多野伽引多野薩嚩尾覲曩二合引俱嚕俱嚕親那親那頻那頻那剎跛野剎跛野扇引帝引扇引帝引難引帝引難引帝引那引麼野那引麼野訥嚕二合怛那哩舍引野怛麼二合引南麼麼𠸪乞叉二合𠸪乞叉二合薩嚩薩怛嚩二合室左二合薩嚩諾乞剎二合怛囉二合仡囉二合賀引閉𧹞引麼引儞哩嚩二合引囉曳婆誐嚩底麼賀引麼引曳鉢囉二合娑馱野薩嚩播引播引儞彌引薩嚩薩怛嚩二合引南贊抳贊抳都嚕都嚕婆誐嚩帝贊抳贊抳蘇母蘇母祖母祖母婆嚩婆吠烏仡哩二合引烏仡囉二合多閉布囉野麼麼薩嚩薩怛嚩二合引難引左麼努引囉他薩嚩怛他引誐多引地瑟恥二合多三摩曳娑嚩二合引賀引唵引娑嚩二合引賀吽娑嚩二合引賀引紇凌二合娑嚩二合引賀引通娑嚩二合引賀引定娑嚩二合引賀引嚩日囉二合馱囉引野娑嚩二合引賀引鉢捺麼二合馱囉引野娑嚩二合引賀阿𡫸底也二合野娑嚩二合引賀引穌麼野娑嚩二合引賀馱囉抳穌多引野娑嚩二合引賀引母馱野娑嚩二合賀勿里二合賀薩波二合多曳娑嚩二合引賀引速訖囉二合野娑嚩二合引賀引訖哩二合瑟拏二合嚩囉拏二合引野娑嚩二合引賀引囉賀吠娑嚩二合引賀引迦多吠娑嚩二合引賀引沒馱野娑嚩二合引賀嚩日囉二合馱囉野娑囉二合引賀引鉢那麼馱囉引野娑嚩二合引賀引俱麼囉二合野娑嚩二合引賀諾乞叉二合怛囉二合𧹞娑嚩二合引賀薩里舞波那囉二合嚩𧹞娑嚩二合引賀引唵薩哩嚩二合尾禰吽𠷑吒娑嚩二合引賀爾時世尊說此陀羅尼已。",
        "from": "T21n1303_001:0422a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩言。",
        "from": "T21n1303_001:0422a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此真言最上祕密。",
        "from": "T21n1303_001:0422a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與眾生滿一切願。",
        "from": "T21n1303_001:0422a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人求長壽等。",
        "from": "T21n1303_001:0422a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於八月七日起首。",
        "from": "T21n1303_001:0422a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持齋戒至十四日夜。",
        "from": "T21n1303_001:0422a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法供養宿曜至十五日。",
        "from": "T21n1303_001:0422a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一晝夜中讀誦此陀羅尼。",
        "from": "T21n1303_001:0422a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人得長壽至九十九歲。",
        "from": "T21n1303_001:0422a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有雷電龍鬼諸惡星曜皆不能怖。",
        "from": "T21n1303_001:0422a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得宿命智所願如意。",
        "from": "T21n1303_001:0422b01_7",
        "context_with_next_sentence": true
    },
    {
