{
    "X19n0347_012:0572b20_0": "維摩詰所說經卷十二",
    "X19n0347_012:0572b21_0": "見阿閦佛品",
    "X19n0347_012:0572b22_0": "爾時世尊。",
    "X19n0347_012:0572b22_1": "問維摩詰。",
    "X19n0347_012:0572b22_2": "汝欲見如來。",
    "X19n0347_012:0572b22_3": "為以何等。",
    "X19n0347_012:0572b22_4": "觀如來乎。",
    "X19n0347_012:0572b23_5": "維摩詰言。",
    "X19n0347_012:0572b23_6": "如自觀身實相。",
    "X19n0347_012:0572b23_7": "觀佛亦然。",
    "X19n0347_012:0572b23_8": "我觀如來。",
    "X19n0347_012:0572b24_9": "前際不來。",
    "X19n0347_012:0572b24_10": "後際不去。",
    "X19n0347_012:0572b24_11": "今則不住。",
    "X19n0347_012:0572b24_12": "不觀色。",
    "X19n0347_012:0572c01_0": "不觀色如。",
    "X19n0347_012:0572c01_1": "不觀色性。",
    "X19n0347_012:0572c01_2": "不觀受想行識。",
    "X19n0347_012:0572c01_3": "不觀識如。",
    "X19n0347_012:0572c02_0": "不觀識性。",
    "X19n0347_012:0572c02_1": "非四大起。",
    "X19n0347_012:0572c02_2": "同於虗空。",
    "X19n0347_012:0572c02_3": "六入無積。",
    "X19n0347_012:0572c02_4": "眼耳鼻舌身心已過。",
    "X19n0347_012:0572c03_5": "不在三界。",
    "X19n0347_012:0572c03_6": "三垢已離。",
    "X19n0347_012:0572c03_7": "順三脫門。",
    "X19n0347_012:0572c04_0": "具足三明(順三脫無相)。",
    "X19n0347_012:0572c04_1": "與無明等。",
    "X19n0347_012:0572c04_2": "不一相。",
    "X19n0347_012:0572c04_3": "不異相。",
    "X19n0347_012:0572c04_4": "不自相。",
    "X19n0347_012:0572c04_5": "不他相。",
    "X19n0347_012:0572c05_6": "非無相。",
    "X19n0347_012:0572c05_7": "非取相。",
    "X19n0347_012:0572c05_8": "不此岸。",
    "X19n0347_012:0572c05_9": "不彼岸。",
    "X19n0347_012:0572c05_10": "不中流而化眾生。",
    "X19n0347_012:0572c06_11": "觀於寂滅。",
    "X19n0347_012:0572c06_12": "亦不永滅。",
    "X19n0347_012:0572c06_13": "不此不彼。",
    "X19n0347_012:0572c06_14": "不以此。",
    "X19n0347_012:0572c07_0": "不以彼。",
    "X19n0347_012:0572c07_1": "不可以智知。",
    "X19n0347_012:0572c07_2": "不可以識識。",
    "X19n0347_012:0572c07_3": "無晦無明。",
    "X19n0347_012:0572c07_4": "無名無相。",
    "X19n0347_012:0572c08_5": "無強無弱。",
    "X19n0347_012:0572c08_6": "非淨非穢。",
    "X19n0347_012:0572c08_7": "不在方。",
    "X19n0347_012:0572c08_8": "不離方。",
    "X19n0347_012:0572c08_9": "非有無。",
    "X19n0347_012:0572c09_10": "非無為。",
    "X19n0347_012:0572c09_11": "無示無說。",
    "X19n0347_012:0572c09_12": "不施不慳。",
    "X19n0347_012:0572c09_13": "不戒不犯。",
    "X19n0347_012:0572c09_14": "不忍不恚。",
    "X19n0347_012:0572c10_15": "不進不怠。",
    "X19n0347_012:0572c10_16": "不定不亂。",
    "X19n0347_012:0572c10_17": "不智不愚。",
    "X19n0347_012:0572c10_18": "不誠不欺不來不去。",
    "X19n0347_012:0572c11_19": "不出不入。",
    "X19n0347_012:0572c11_20": "一切言語道斷。",
    "X19n0347_012:0572c11_21": "非福田。",
    "X19n0347_012:0572c12_0": "非不福田(無相之體莫知其畔)。",
    "X19n0347_012:0572c12_1": "非應供養。",
    "X19n0347_012:0572c12_2": "非不應供養。",
    "X19n0347_012:0572c12_3": "非取非捨。",
    "X19n0347_012:0572c12_4": "非有相。",
    "X19n0347_012:0572c13_5": "非無相。",
    "X19n0347_012:0572c13_6": "同真際。",
    "X19n0347_012:0572c13_7": "等法性。",
    "X19n0347_012:0572c13_8": "不可稱。",
    "X19n0347_012:0572c13_9": "不可量。",
    "X19n0347_012:0572c13_10": "過諸稱量。",
    "X19n0347_012:0572c14_11": "非大非小。",
    "X19n0347_012:0572c14_12": "非見非聞。",
    "X19n0347_012:0572c14_13": "非覺非知。",
    "X19n0347_012:0572c14_14": "離眾結縛。",
    "X19n0347_012:0572c15_15": "等諸智。",
    "X19n0347_012:0572c15_16": "同眾生。",
    "X19n0347_012:0572c15_17": "於諸法無分別。",
    "X19n0347_012:0572c15_18": "一切無得無失。",
    "X19n0347_012:0572c16_19": "無濁無惱。",
    "X19n0347_012:0572c16_20": "無作無起。",
    "X19n0347_012:0572c16_21": "無生無滅無畏無憂。",
    "X19n0347_012:0572c16_22": "無喜無厭。",
    "X19n0347_012:0572c17_23": "無已有。",
    "X19n0347_012:0572c17_24": "無當有。",
    "X19n0347_012:0572c17_25": "無今有。",
    "X19n0347_012:0572c17_26": "不可以一切言說分別顯示(都結之也)。",
    "X19n0347_012:0572c18_27": "世尊。",
    "X19n0347_012:0572c18_28": "如來身為若此。",
    "X19n0347_012:0572c18_29": "作如是觀。",
    "X19n0347_012:0572c18_30": "以斯觀者。",
    "X19n0347_012:0573a01_31": "名為正觀。",
    "X19n0347_012:0573a01_32": "若他觀者。",
    "X19n0347_012:0573a01_33": "名為邪觀。",
    "X19n0347_012:0573a01_34": "爾時舍利弗問維摩詰。",
    "X19n0347_012:0573a02_35": "汝於何沒。",
    "X19n0347_012:0573a02_36": "而來生此。",
    "X19n0347_012:0573a02_37": "維摩詰言。",
    "X19n0347_012:0573a03_0": "汝所得法。",
    "X19n0347_012:0573a03_1": "有沒生乎。",
    "X19n0347_012:0573a03_2": "舍利弗言。",
    "X19n0347_012:0573a03_3": "無沒生也。",
    "X19n0347_012:0573a03_4": "若諸法無沒生相。",
    "X19n0347_012:0573a04_5": "云何問言。",
    "X19n0347_012:0573a04_6": "汝於何沒而來生此。",
    "X19n0347_012:0573a04_7": "於意云何。",
    "X19n0347_012:0573a05_8": "譬如幻師。",
    "X19n0347_012:0573a05_9": "幻作男女。",
    "X19n0347_012:0573a05_10": "寧沒生耶。",
    "X19n0347_012:0573a05_11": "舍利弗言。",
    "X19n0347_012:0573a06_12": "無沒生也。",
    "X19n0347_012:0573a06_13": "汝豈不聞佛說諸法如幻相乎。",
    "X19n0347_012:0573a06_14": "答曰如是。",
    "X19n0347_012:0573a07_15": "若一切法。",
    "X19n0347_012:0573a07_16": "如幻相者。",
    "X19n0347_012:0573a07_17": "云何問言。",
    "X19n0347_012:0573a07_18": "汝於何沒而來生此。",
    "X19n0347_012:0573a08_19": "舍利弗。",
    "X19n0347_012:0573a08_20": "沒者。",
    "X19n0347_012:0573a08_21": "為虗誑法壞敗之相。",
    "X19n0347_012:0573a09_0": "生者。",
    "X19n0347_012:0573a09_1": "為虗誑法相續之相。",
    "X19n0347_012:0573a09_2": "菩薩雖沒。",
    "X19n0347_012:0573a09_3": "不盡善本。",
    "X19n0347_012:0573a10_0": "雖生。",
    "X19n0347_012:0573a10_1": "不長諸惡。",
    "X19n0347_012:0573a10_2": "是時佛告舍利弗。",
    "X19n0347_012:0573a10_3": "有國名妙喜。",
    "X19n0347_012:0573a11_0": "佛號無動。",
    "X19n0347_012:0573a11_1": "是維摩詰。",
    "X19n0347_012:0573a11_2": "於彼國沒。",
    "X19n0347_012:0573a11_3": "而來生此。",
    "X19n0347_012:0573a11_4": "舍利弗言。",
    "X19n0347_012:0573a12_5": "未曾有也。",
    "X19n0347_012:0573a12_6": "世尊。",
    "X19n0347_012:0573a12_7": "是人乃能捨清淨土。",
    "X19n0347_012:0573a12_8": "而來樂此多怒害處。",
    "X19n0347_012:0573a13_9": "維摩詰語舍利弗。",
    "X19n0347_012:0573a13_10": "於意云何。",
    "X19n0347_012:0573a13_11": "日光出時。",
    "X19n0347_012:0573a14_12": "與冥合乎。",
    "X19n0347_012:0573a14_13": "答曰不也。",
    "X19n0347_012:0573a14_14": "日光出時。",
    "X19n0347_012:0573a14_15": "則無眾冥。",
    "X19n0347_012:0573a15_16": "維摩詰言。",
    "X19n0347_012:0573a15_17": "夫日何故行閻浮根。",
    "X19n0347_012:0573a15_18": "答曰。",
    "X19n0347_012:0573a15_19": "欲以明照為之除冥。",
    "X19n0347_012:0573a16_20": "維摩詰言。",
    "X19n0347_012:0573a16_21": "菩薩如是。",
    "X19n0347_012:0573a16_22": "雖生不淨佛土。",
    "X19n0347_012:0573a17_23": "為化眾生。",
    "X19n0347_012:0573a17_24": "不與愚暗而共合也。",
    "X19n0347_012:0573a17_25": "但滅眾生煩惱闇耳。",
    "X19n0347_012:0573a18_26": "是時大眾。",
    "X19n0347_012:0573a18_27": "渴仰欲見妙喜世界無動如來。",
    "X19n0347_012:0573a19_28": "及其菩薩聲聞之眾。",
    "X19n0347_012:0573a19_29": "佛知一切眾會所念。",
    "X19n0347_012:0573a19_30": "告維摩詰言。",
    "X19n0347_012:0573a20_31": "善男子。",
    "X19n0347_012:0573a20_32": "為此眾會。",
    "X19n0347_012:0573a20_33": "現妙喜國無動如來。",
    "X19n0347_012:0573a21_34": "及諸菩薩。",
    "X19n0347_012:0573a21_35": "聲聞之眾。",
    "X19n0347_012:0573a21_36": "眾皆欲見。",
    "X19n0347_012:0573a21_37": "於是維摩詰心念。",
    "X19n0347_012:0573a22_38": "吾當不起於座。",
    "X19n0347_012:0573a22_39": "接妙喜國。",
    "X19n0347_012:0573a22_40": "鐵圍山川。",
    "X19n0347_012:0573a22_41": "溪谷江河。",
    "X19n0347_012:0573a23_42": "大海泉源。",
    "X19n0347_012:0573a23_43": "須彌諸山。",
    "X19n0347_012:0573a23_44": "及日月星宿。",
    "X19n0347_012:0573a23_45": "天龍鬼神。",
    "X19n0347_012:0573a24_46": "梵天等宮。",
    "X19n0347_012:0573a24_47": "并諸菩薩聲聞之眾。",
    "X19n0347_012:0573a24_48": "城邑聚落。",
    "X19n0347_012:0573a24_49": "男女大小。",
    "X19n0347_012:0573b01_50": "乃至無動如來。",
    "X19n0347_012:0573b01_51": "及菩提樹。",
    "X19n0347_012:0573b01_52": "諸妙蓮華。",
    "X19n0347_012:0573b01_53": "能於十方。",
    "X19n0347_012:0573b02_54": "作佛事者。",
    "X19n0347_012:0573b02_55": "三道寶階。",
    "X19n0347_012:0573b02_56": "從閻浮提。",
    "X19n0347_012:0573b02_57": "至忉利天。",
    "X19n0347_012:0573b03_58": "以此寶階。",
    "X19n0347_012:0573b03_59": "諸天來下。",
    "X19n0347_012:0573b03_60": "悉為禮敬無動如來。",
    "X19n0347_012:0573b03_61": "聽受經法。",
    "X19n0347_012:0573b04_62": "閻浮提人。",
    "X19n0347_012:0573b04_63": "亦登其階。",
    "X19n0347_012:0573b04_64": "上昇忉利。",
    "X19n0347_012:0573b04_65": "見彼諸天。",
    "X19n0347_012:0573b05_66": "妙喜世界。",
    "X19n0347_012:0573b05_67": "成就如是無量功德。",
    "X19n0347_012:0573b05_68": "上至阿迦尼吒天。",
    "X19n0347_012:0573b06_69": "下至水際。",
    "X19n0347_012:0573b06_70": "以右手斷取。",
    "X19n0347_012:0573b06_71": "如陶家輪。",
    "X19n0347_012:0573b06_72": "入此世界。",
    "X19n0347_012:0573b07_73": "猶持華鬘。",
    "X19n0347_012:0573b07_74": "示一切眾。",
    "X19n0347_012:0573b07_75": "作是念已。",
    "X19n0347_012:0573b07_76": "入於三昧。",
    "X19n0347_012:0573b07_77": "現神通力。",
    "X19n0347_012:0573b08_78": "以其右手。",
    "X19n0347_012:0573b08_79": "斷取妙喜世界。",
    "X19n0347_012:0573b08_80": "置於此土。",
    "X19n0347_012:0573b08_81": "彼得神通菩薩。",
    "X19n0347_012:0573b09_82": "及聲聞眾。",
    "X19n0347_012:0573b09_83": "并餘天人。",
    "X19n0347_012:0573b09_84": "俱發聲言。",
    "X19n0347_012:0573b09_85": "唯然世尊。",
    "X19n0347_012:0573b10_86": "誰取我去。",
    "X19n0347_012:0573b10_87": "願見救護。",
    "X19n0347_012:0573b10_88": "無動佛言。",
    "X19n0347_012:0573b10_89": "非我所為。",
    "X19n0347_012:0573b11_90": "是維摩詰神力所作。",
    "X19n0347_012:0573b11_91": "其餘未得神通者。",
    "X19n0347_012:0573b11_92": "不覺不知己之所往。",
    "X19n0347_012:0573b12_93": "妙喜世界。",
    "X19n0347_012:0573b12_94": "雖入此土。",
    "X19n0347_012:0573b12_95": "而不增減。",
    "X19n0347_012:0573b13_0": "於是世界。",
    "X19n0347_012:0573b13_1": "亦不迫隘。",
    "X19n0347_012:0573b13_2": "如本無異。",
    "X19n0347_012:0573b13_3": "爾時釋迦牟尼佛。",
    "X19n0347_012:0573b14_4": "告諸大眾。",
    "X19n0347_012:0573b14_5": "汝等且觀妙喜世界。",
    "X19n0347_012:0573b14_6": "無動如來。",
    "X19n0347_012:0573b14_7": "其國嚴飾。",
    "X19n0347_012:0573b15_8": "菩薩行淨。",
    "X19n0347_012:0573b15_9": "弟子清白。",
    "X19n0347_012:0573b15_10": "皆曰。",
    "X19n0347_012:0573b15_11": "唯然已見。",
    "X19n0347_012:0573b15_12": "佛言。",
    "X19n0347_012:0573b16_13": "若菩薩。",
    "X19n0347_012:0573b16_14": "欲得如是清淨佛土。",
    "X19n0347_012:0573b16_15": "當學無動如來所行之道。",
    "X19n0347_012:0573b17_16": "現此妙喜國時。",
    "X19n0347_012:0573b17_17": "娑婆世界。",
    "X19n0347_012:0573b17_18": "十四那由他人。",
    "X19n0347_012:0573b18_19": "發阿耨多羅三藐三菩提心。",
    "X19n0347_012:0573b18_20": "皆願生於妙喜佛土。",
    "X19n0347_012:0573b19_21": "釋迦牟尼佛。",
    "X19n0347_012:0573b19_22": "即記之曰。",
    "X19n0347_012:0573b19_23": "當生彼國。",
    "X19n0347_012:0573b19_24": "時妙喜世界。",
    "X19n0347_012:0573b20_25": "於此國土。",
    "X19n0347_012:0573b20_26": "所應饒益。",
    "X19n0347_012:0573b20_27": "其事訖已。",
    "X19n0347_012:0573b20_28": "還復本處。",
    "X19n0347_012:0573b21_29": "舉眾皆見。",
    "X19n0347_012:0573b21_30": "佛告舍利弗。",
    "X19n0347_012:0573b21_31": "汝見此妙喜世界。",
    "X19n0347_012:0573b21_32": "及無動佛不。",
    "X19n0347_012:0573b22_33": "唯然已見。",
    "X19n0347_012:0573b22_34": "世尊。",
    "X19n0347_012:0573b22_35": "願使一切眾生。",
    "X19n0347_012:0573b22_36": "得清淨土。",
    "X19n0347_012:0573b23_37": "如無動佛。",
    "X19n0347_012:0573b23_38": "獲神通力。",
    "X19n0347_012:0573b23_39": "如維摩詰。",
    "X19n0347_012:0573b23_40": "世尊。",
    "X19n0347_012:0573b23_41": "我等快得善利。",
    "X19n0347_012:0573b24_42": "得見是人。",
    "X19n0347_012:0573b24_43": "親近供養。",
    "X19n0347_012:0573b24_44": "其諸眾生。",
    "X19n0347_012:0573b24_45": "若今現在。",
    "X19n0347_012:0573c01_46": "若佛滅後。",
    "X19n0347_012:0573c01_47": "聞此經者。",
    "X19n0347_012:0573c01_48": "亦得善利。",
    "X19n0347_012:0573c01_49": "況復聞已。",
    "X19n0347_012:0573c02_0": "信解受持。",
    "X19n0347_012:0573c02_1": "讀誦解說。",
    "X19n0347_012:0573c02_2": "如法修行。",
    "X19n0347_012:0573c02_3": "若有手得是經典者。",
    "X19n0347_012:0573c03_4": "便為已得法寶之藏。",
    "X19n0347_012:0573c03_5": "若有讀誦。",
    "X19n0347_012:0573c03_6": "解釋其義。",
    "X19n0347_012:0573c04_0": "如說修行。",
    "X19n0347_012:0573c04_1": "則為諸佛之所護念。",
    "X19n0347_012:0573c04_2": "其有供養如是人者。",
    "X19n0347_012:0573c05_3": "當知則為供養於佛。",
    "X19n0347_012:0573c05_4": "其有書持此經卷者。",
    "X19n0347_012:0573c06_0": "當知其室即有如來。",
    "X19n0347_012:0573c06_1": "若聞是經。",
    "X19n0347_012:0573c06_2": "能隨喜者。",
    "X19n0347_012:0573c06_3": "斯人則為趣一切智。",
    "X19n0347_012:0573c07_4": "若能信解此經。",
    "X19n0347_012:0573c07_5": "乃至一四句偈。",
    "X19n0347_012:0573c08_0": "為他說者。",
    "X19n0347_012:0573c08_1": "當知此人。",
    "X19n0347_012:0573c08_2": "即是受阿耨多羅三藐三"
}