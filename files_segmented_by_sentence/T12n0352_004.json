[
    {
        "source_sentence": "佛說大迦葉問大寶積正法經",
        "from": "T12n0352_004:0211c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卷第四",
        "from": "T12n0352_004:0211c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T12n0352_004:0211c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯佛告迦葉：",
        "from": "T12n0352_004:0211c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如有人善解習馬，其馬性惡難以制伏，此人調習自然良善。",
        "from": "T12n0352_004:0211c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0211c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是相應比丘能守禁律，心識囂馳難以制伏，被此比丘調伏制御，離瞋恚等如如不動。",
        "from": "T12n0352_004:0211c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0211c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如惡性馬，　　遇彼調習人，",
        "from": "T12n0352_004:0211c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種被制伏，　　不久而調善。",
        "from": "T12n0352_004:0211c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相應行比丘，　　善持於禁律，",
        "from": "T12n0352_004:0211c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏於識心，　　令彼淨安住。",
        "from": "T12n0352_004:0211c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0211c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如有人於其喉咽而患癭病，致壞命根得其苦惱。",
        "from": "T12n0352_004:0211c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0211c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是若復有人深著我想，於自身命後得大苦。",
        "from": "T12n0352_004:0211c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0211c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如癭病人，　　苦惱於身命，",
        "from": "T12n0352_004:0211c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其晝夜中，　　無暫得安樂。",
        "from": "T12n0352_004:0211c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著我之眾生，　　其義亦如是，",
        "from": "T12n0352_004:0211c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見倒壞其身，　　於後生諸苦。",
        "from": "T12n0352_004:0212a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如有人身被纏縛，巧設方便而得解免。",
        "from": "T12n0352_004:0212a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0212a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是，若彼有情作善相應，制止心猿令得離縛。",
        "from": "T12n0352_004:0212a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如纏縛人，　　能設巧方便，",
        "from": "T12n0352_004:0212a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解彼身邊縛，　　令身得自在。",
        "from": "T12n0352_004:0212a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相應善有情，　　禁止於心識，",
        "from": "T12n0352_004:0212a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼離纏縛，　　其義亦如是。",
        "from": "T12n0352_004:0212a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如虛空本自廓然，彼有二物可以蓋覆。",
        "from": "T12n0352_004:0212a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等二物？",
        "from": "T12n0352_004:0212a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是彼雲、霧。",
        "from": "T12n0352_004:0212a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0212a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是出家之人，本自寂靜而求世間呪術之法，又於衣鉢財利畜積受用，此為覆障。",
        "from": "T12n0352_004:0212a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如於雲霧，　　覆障於虛空；",
        "from": "T12n0352_004:0212a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘亦復然，　　行彼世間法，",
        "from": "T12n0352_004:0212a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習學於呪術，　　積聚於衣鉢。",
        "from": "T12n0352_004:0212a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此二障行人，　　菩薩須遠離。",
        "from": "T12n0352_004:0212a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此出家人有二種纏縛。",
        "from": "T12n0352_004:0212a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何二種？",
        "from": "T12n0352_004:0212a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0212a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為利養纏縛，二為名稱纏縛。",
        "from": "T12n0352_004:0212a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼出家人宜各遠離。",
        "from": "T12n0352_004:0212a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若彼出家人，　　貪著於利養，",
        "from": "T12n0352_004:0212a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及愛好名聞，　　此二重纏縛，",
        "from": "T12n0352_004:0212a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦障聖解脫，　　出家須遠離。",
        "from": "T12n0352_004:0212a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有二種法滅出家德。",
        "from": "T12n0352_004:0212a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何二法？",
        "from": "T12n0352_004:0212a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一親近在家，二憎嫌聖者。",
        "from": "T12n0352_004:0212a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「親近在家人，　　憎嫌於聖者，",
        "from": "T12n0352_004:0212a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此二非道法，　　滅彼出家德。",
        "from": "T12n0352_004:0212a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出家菩薩人，　　彼宜速遠離。",
        "from": "T12n0352_004:0212a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有二種法為出家垢染。",
        "from": "T12n0352_004:0212a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何二法？",
        "from": "T12n0352_004:0212a29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心多煩惱，二棄捨善友攝受惡友。",
        "from": "T12n0352_004:0212b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若彼出家人，　　心多於煩惱，",
        "from": "T12n0352_004:0212b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄背善良朋，　　親近於惡友。",
        "from": "T12n0352_004:0212b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說於此人，　　為彼出家垢。",
        "from": "T12n0352_004:0212b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩眾，　　各各宜遠離。",
        "from": "T12n0352_004:0212b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有二種法，於出家人如臨崖險。",
        "from": "T12n0352_004:0212b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何二種？",
        "from": "T12n0352_004:0212b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一輕慢妙法，二信樂破戒。",
        "from": "T12n0352_004:0212b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若彼出家人，　　輕慢於妙法，",
        "from": "T12n0352_004:0212b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信重破戒者，　　如登於崖險，",
        "from": "T12n0352_004:0212b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墜墮在須臾。",
        "from": "T12n0352_004:0212b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　此二非律儀，一切諸佛子，　　彼二須遠離。",
        "from": "T12n0352_004:0212b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有二種法為出家過惡。",
        "from": "T12n0352_004:0212b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何二種？",
        "from": "T12n0352_004:0212b14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一見他過失，二蓋覆自過。",
        "from": "T12n0352_004:0212b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有出家者，　　恒見他人過，",
        "from": "T12n0352_004:0212b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆藏於自罪，　　此二大過失，",
        "from": "T12n0352_004:0212b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "損惱毒如火，　　智者須遠離。",
        "from": "T12n0352_004:0212b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有二種法增出家熱惱。",
        "from": "T12n0352_004:0212b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何二種？",
        "from": "T12n0352_004:0212b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一受持袈裟心懷不淨，二恃己戒德訶責非行。",
        "from": "T12n0352_004:0212b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「雖復披袈裟，　　心行不淨行，",
        "from": "T12n0352_004:0212b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設身有戒德，　　而用於惡言，",
        "from": "T12n0352_004:0212b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧伏非行者，　　此二須遠離。",
        "from": "T12n0352_004:0212b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有二種法醫出家人病。",
        "from": "T12n0352_004:0212b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何二法？",
        "from": "T12n0352_004:0212b26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一行大乘者見心決定，二為諸眾生不斷佛法。",
        "from": "T12n0352_004:0212b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有出家者，　　行彼大乘行，",
        "from": "T12n0352_004:0212b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見心恒決定，　　不斷於佛法，",
        "from": "T12n0352_004:0212c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此二出家人，　　佛說名無病。",
        "from": "T12n0352_004:0212c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有二種法為出家人長病。",
        "from": "T12n0352_004:0212c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何二種？",
        "from": "T12n0352_004:0212c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一得阿波諦重罪，二不能發露懺悔。",
        "from": "T12n0352_004:0212c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0212c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「出家比丘眾，　　犯彼阿波諦，",
        "from": "T12n0352_004:0212c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能懺滅罪，　　愚迷不重戒，",
        "from": "T12n0352_004:0212c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那剎那實，　　此惡長為病。",
        "from": "T12n0352_004:0212c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0212c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此有沙門為沙門名。",
        "from": "T12n0352_004:0212c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」迦葉白言：",
        "from": "T12n0352_004:0212c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何沙門為沙門名？",
        "from": "T12n0352_004:0212c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「迦葉！",
        "from": "T12n0352_004:0212c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此有四種沙門。",
        "from": "T12n0352_004:0212c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何四種？",
        "from": "T12n0352_004:0212c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一行色相沙門，二密行虛誑沙門，三求名聞稱讚沙門，四實行沙門。",
        "from": "T12n0352_004:0212c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0212c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是四種沙門。",
        "from": "T12n0352_004:0212c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」迦葉白言：",
        "from": "T12n0352_004:0212c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何名行色相沙門？",
        "from": "T12n0352_004:0212c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「迦葉！",
        "from": "T12n0352_004:0212c13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一沙門，雖復剃除鬚髮著佛袈裟受持鉢器色相具足，而身不清淨、口不清淨、意不清淨，不自調伏麁惡不善，廣貪財利命不清淨，得破戒罪法。",
        "from": "T12n0352_004:0212c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0212c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名行色相沙門。",
        "from": "T12n0352_004:0212c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」迦葉白言：",
        "from": "T12n0352_004:0212c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何名密行虛誑沙門？",
        "from": "T12n0352_004:0212c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「迦葉！",
        "from": "T12n0352_004:0212c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一沙門，雖知行業亦具威儀，喫麁惡飲食，詐歡詐喜，於行住坐臥恒搆虛誑，又不親近在家出家四聖種族，詐默無言誑賺有情，心無清淨亦無調伏，亦不息念虛妄推度。",
        "from": "T12n0352_004:0212c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住著我人之相，若遇空法而生怖畏如登崖險，若見比丘善談空者如遇冤家。",
        "from": "T12n0352_004:0212c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0212c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說名為密行虛誑沙門。",
        "from": "T12n0352_004:0212c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」迦葉白言：",
        "from": "T12n0352_004:0212c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何名為求名聞稱讚沙門？",
        "from": "T12n0352_004:0212c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「迦葉！",
        "from": "T12n0352_004:0212c26_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一沙門，為求名聞稱讚詐行持戒，惑亂他人恃衒多聞要他稱讚。",
        "from": "T12n0352_004:0212c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或居山野、或處林間，詐現少欲無貪，假行清淨之行，於其心內無其離欲，無其寂靜、無其息慮、無證菩提，亦不為沙門、亦不為婆羅門、亦不為涅槃，而求稱讚名聞。",
        "from": "T12n0352_004:0213a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0213a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名求名聞稱讚沙門。",
        "from": "T12n0352_004:0213a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」迦葉白言：",
        "from": "T12n0352_004:0213a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何名實行沙門？",
        "from": "T12n0352_004:0213a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「迦葉！",
        "from": "T12n0352_004:0213a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一沙門，不為身命而行外事，亦不言論名聞利養，唯行空無相無願。",
        "from": "T12n0352_004:0213a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聞一切法已，正意思惟涅槃實際，恒修梵行不求世報，亦不論量三界喜樂之事，唯見性空不得事法，亦不議論我人眾生壽者及補特伽羅。",
        "from": "T12n0352_004:0213a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見正法位離諸虛妄，於解脫道斷諸煩惱，達一切法自性清淨，內外不著、無集無散，於彼法身如來明了通達。",
        "from": "T12n0352_004:0213a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無其見取，亦不言論，色身離欲，亦不見色相，亦不見三業造作，亦不執凡聖之眾。",
        "from": "T12n0352_004:0213a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法無所有，斷諸分別自性凝然，不得輪迴不得涅槃，無縛無解無來無去，知一切法寂靜湛然。",
        "from": "T12n0352_004:0213a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0213a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說名為實行沙門，作相應行，非求名聞故。",
        "from": "T12n0352_004:0213a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0213a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「所有身口意，　　三業不清淨，",
        "from": "T12n0352_004:0213a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪愛不調伏，　　麁惡行不密。",
        "from": "T12n0352_004:0213a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓頂服三衣，　　執持於應器，",
        "from": "T12n0352_004:0213a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此沙門，　　恒行於色相。",
        "from": "T12n0352_004:0213a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然依彼行，　　虛誑而不實，",
        "from": "T12n0352_004:0213a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詐現四威儀，　　示同於聖者。",
        "from": "T12n0352_004:0213a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離和合處，　　恒餐麁惡食，",
        "from": "T12n0352_004:0213a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無彼清淨行，　　密行於虛誑。",
        "from": "T12n0352_004:0213a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或彼為求名，　　要他行稱讚，",
        "from": "T12n0352_004:0213a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詐修於戒定，　　示衒行頭陀。",
        "from": "T12n0352_004:0213a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內意不調伏，　　誑賺於信施，",
        "from": "T12n0352_004:0213a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不行離欲善，　　亦不息攀緣。",
        "from": "T12n0352_004:0213a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見說法相空，　　怖同登山險，",
        "from": "T12n0352_004:0213b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或居山野間，　　而無真實意。",
        "from": "T12n0352_004:0213b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此沙門，　　為求名聞故。",
        "from": "T12n0352_004:0213b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼實行者，　　不為於身命，",
        "from": "T12n0352_004:0213b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄求名利養，　　亦無求快樂，",
        "from": "T12n0352_004:0213b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯修正解脫，　　救拔諸惡趣。",
        "from": "T12n0352_004:0213b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖知深法空，　　不得於寂靜，",
        "from": "T12n0352_004:0213b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無非寂靜，　　不住於涅槃，",
        "from": "T12n0352_004:0213b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得於生死，　　不著於聖人，",
        "from": "T12n0352_004:0213b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不捨於凡夫。",
        "from": "T12n0352_004:0213b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　本自無所來，今亦無所去，　　一切法寂然。",
        "from": "T12n0352_004:0213b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說於此人，　　是名實行者。",
        "from": "T12n0352_004:0213b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0213b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如貧人家無財利，自發其言告眾人曰：",
        "from": "T12n0352_004:0213b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我家之內有大庫藏財物盈滿。",
        "from": "T12n0352_004:0213b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』迦葉！",
        "from": "T12n0352_004:0213b14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於意云何？",
        "from": "T12n0352_004:0213b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此貧人言是事實不？",
        "from": "T12n0352_004:0213b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」迦葉白言：",
        "from": "T12n0352_004:0213b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「不也。",
        "from": "T12n0352_004:0213b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊！",
        "from": "T12n0352_004:0213b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T12n0352_004:0213b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「迦葉！",
        "from": "T12n0352_004:0213b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復如是。",
        "from": "T12n0352_004:0213b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼沙門婆羅門自無戒德而復發言：",
        "from": "T12n0352_004:0213b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我身具大德業。",
        "from": "T12n0352_004:0213b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』此言不實，是事難信。",
        "from": "T12n0352_004:0213b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0213b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如貧窮人，　　言自有庫藏，",
        "from": "T12n0352_004:0213b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盈滿七珍財，　　彼語不相應。",
        "from": "T12n0352_004:0213b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門婆羅門，　　虛妄亦如是，",
        "from": "T12n0352_004:0213b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業無清淨，　　自言具戒德。",
        "from": "T12n0352_004:0213b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0213b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如有人入大水內而不專心，恣意戲水不覺溺死。",
        "from": "T12n0352_004:0213b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0213b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復如是。",
        "from": "T12n0352_004:0213b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此沙門婆羅門多知樂法，入大法海不能制心，好行貪瞋癡，被煩惱貪引生惡趣。",
        "from": "T12n0352_004:0213b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0213b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如戲水人，　　入於大水內，",
        "from": "T12n0352_004:0213b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不自用其心，　　被水溺其命。",
        "from": "T12n0352_004:0213b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門婆羅門，　　貪入大法海，",
        "from": "T12n0352_004:0213c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恣行貪瞋癡，　　沈墜於惡趣。",
        "from": "T12n0352_004:0213c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0213c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如醫人修合湯藥，將往四方欲療眾病，忽自得疾而不能救。",
        "from": "T12n0352_004:0213c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0213c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是，若彼比丘修彼多聞，欲化有情忽爾之間，自起煩惱而不能伏。",
        "from": "T12n0352_004:0213c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0213c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如良醫人，　　修合諸湯藥，",
        "from": "T12n0352_004:0213c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持往於四方，　　治彼眾生病，",
        "from": "T12n0352_004:0213c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自忽有疾苦，　　不能自醫療。",
        "from": "T12n0352_004:0213c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘亦如是，　　修學於多聞，",
        "from": "T12n0352_004:0213c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲行於化導，　　自忽煩惱生，",
        "from": "T12n0352_004:0213c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能善制止，　　虛施於辛苦。",
        "from": "T12n0352_004:0213c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0213c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如有人身有重病，服彼上好名藥不免命終。",
        "from": "T12n0352_004:0213c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0213c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是，若彼有情具煩惱病，而欲多聞修行亦不免墜墮。",
        "from": "T12n0352_004:0213c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0213c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如重病人，　　久患而不差，",
        "from": "T12n0352_004:0213c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設服於良藥，　　終不免無常。",
        "from": "T12n0352_004:0213c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生亦如是，　　恒染煩惱病，",
        "from": "T12n0352_004:0213c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設樂修多聞，　　不免於墜墮。",
        "from": "T12n0352_004:0213c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0213c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如摩尼寶珠墮落不淨之中，其珠體觸不堪使用。",
        "from": "T12n0352_004:0213c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0213c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是，若彼比丘雖具多聞，墮落不淨利養之中，諸天人民不生敬愛。",
        "from": "T12n0352_004:0213c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0213c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如摩尼寶，　　墮落不淨中，",
        "from": "T12n0352_004:0213c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染污得其觸，　　使用而不堪。",
        "from": "T12n0352_004:0213c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘亦如是，　　雖復具多聞，",
        "from": "T12n0352_004:0213c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墜墮於不淨，　　名聞利養中，",
        "from": "T12n0352_004:0213c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天及人民，　　而不生愛敬。",
        "from": "T12n0352_004:0213c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0214a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如有人忽爾命終，以其金冠花鬘莊嚴頭面。",
        "from": "T12n0352_004:0214a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉，如是若彼比丘破盡戒律，而以袈裟莊嚴其身，有何所益？",
        "from": "T12n0352_004:0214a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0214a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如命終人，　　以其好花鬘，",
        "from": "T12n0352_004:0214a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及用金寶冠，　　嚴飾屍首上，",
        "from": "T12n0352_004:0214a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人無所用。",
        "from": "T12n0352_004:0214a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以破戒身，　　被挂於袈裟，",
        "from": "T12n0352_004:0214a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴飾作威儀，　　終無於利益。",
        "from": "T12n0352_004:0214a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0214a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如有人洗浴清淨，以其香油塗潤身上及頭髻指甲，身著白衣戴瞻蔔花鬘為上族子。",
        "from": "T12n0352_004:0214a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0214a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是，若彼比丘多聞智慧，身被法服儀相具足，為佛弟子。",
        "from": "T12n0352_004:0214a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此而說頌曰：",
        "from": "T12n0352_004:0214a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「譬如世間人，　　洗浴身清淨，",
        "from": "T12n0352_004:0214a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗潤好香油，　　頭以華鬘飾，",
        "from": "T12n0352_004:0214a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身著於白衣，　　而稱上族子。",
        "from": "T12n0352_004:0214a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘亦如是，　　多聞具總持，",
        "from": "T12n0352_004:0214a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒德恒清淨，　　被挂於法服，",
        "from": "T12n0352_004:0214a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀相而具足，　　此名真佛子。",
        "from": "T12n0352_004:0214a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告迦葉：",
        "from": "T12n0352_004:0214a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有四種破戒比丘，喻持戒影像。",
        "from": "T12n0352_004:0214a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」迦葉白言：",
        "from": "T12n0352_004:0214a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何四種破戒？",
        "from": "T12n0352_004:0214a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「迦葉！",
        "from": "T12n0352_004:0214a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一比丘具足受持別解脫戒，善知禁律，於微細罪深生怕怖，恒依學處說戒清淨，身口意業具足無犯，食離邪命。",
        "from": "T12n0352_004:0214a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此有其過。",
        "from": "T12n0352_004:0214a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何？",
        "from": "T12n0352_004:0214a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執自功能成戒取故。",
        "from": "T12n0352_004:0214a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0214a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是第一破戒喻持戒影像。",
        "from": "T12n0352_004:0214a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次迦葉！",
        "from": "T12n0352_004:0214a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一比丘善知禁律常持戒行，密用三業。",
        "from": "T12n0352_004:0214a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有身見，執情不捨故。",
        "from": "T12n0352_004:0214a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0214a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是第二破戒喻持戒影像。",
        "from": "T12n0352_004:0214a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次迦葉！",
        "from": "T12n0352_004:0214b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一比丘恒行慈心悲愍有情，具足慈善；",
        "from": "T12n0352_004:0214b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞一切法無生，心生驚怕。",
        "from": "T12n0352_004:0214b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0214b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是第三破戒喻持戒影像。",
        "from": "T12n0352_004:0214b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次迦葉！",
        "from": "T12n0352_004:0214b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一比丘，行彼十二頭陀大行具足無缺；",
        "from": "T12n0352_004:0214b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有我心住著我人之相。",
        "from": "T12n0352_004:0214b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0214b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是第四破戒喻持戒影像。",
        "from": "T12n0352_004:0214b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0214b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此四種破戒喻持戒影像。",
        "from": "T12n0352_004:0214b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次迦葉！",
        "from": "T12n0352_004:0214b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說此戒，無人、無我、無眾生、無壽命，無行亦無不行，無作亦無不作，非犯非非犯，無名無色非無名色，無相非無相，無息念非無息念，無取無捨非無取捨，非受非不受，無識無心非無識心，無世間亦無出世間，無所住亦非無住，無自持戒無他持戒。",
        "from": "T12n0352_004:0214b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此戒中離諸毀謗，無迷無執。",
        "from": "T12n0352_004:0214b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T12n0352_004:0214b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說聖者無漏正戒，遠離三界一切住處。",
        "from": "T12n0352_004:0214b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時世尊而說頌曰：",
        "from": "T12n0352_004:0214b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「所持離垢戒，　　非住我人相，",
        "from": "T12n0352_004:0214b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無犯亦無持，　　無縛亦無解，",
        "from": "T12n0352_004:0214b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微妙甚深善，　　遠離於疑惑。",
        "from": "T12n0352_004:0214b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉此戒相，　　如來真實說。",
        "from": "T12n0352_004:0214b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所持無垢戒，　　而於彼世間，",
        "from": "T12n0352_004:0214b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非為自身命，　　普濟諸群生，",
        "from": "T12n0352_004:0214b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同入真如際。",
        "from": "T12n0352_004:0214b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　迦葉此戒相，如來真實說。",
        "from": "T12n0352_004:0214b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「所持離垢戒，　　於彼我人中，",
        "from": "T12n0352_004:0214b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無染亦無淨，　　無暗亦無明，",
        "from": "T12n0352_004:0214b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無得亦無失，　　不住於此岸，",
        "from": "T12n0352_004:0214b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不到於彼岸，　　亦非於中流，",
        "from": "T12n0352_004:0214b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縛脫而平等，　　無住如虛空，",
        "from": "T12n0352_004:0214b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非相非非相。",
        "from": "T12n0352_004:0214c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　迦葉此戒相，如來真實說。",
        "from": "T12n0352_004:0214c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「所持無垢戒，　　不著於名色，",
        "from": "T12n0352_004:0214c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不住於等引，　　恒以淨妙心，",
        "from": "T12n0352_004:0214c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離我有無相。",
        "from": "T12n0352_004:0214c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離持犯等，　　無戒無不戒，",
        "from": "T12n0352_004:0214c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無定亦無散。",
        "from": "T12n0352_004:0214c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智觀無二取，　　此戒淨微妙，",
        "from": "T12n0352_004:0214c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住三摩地，　　三摩地生觀，",
        "from": "T12n0352_004:0214c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧自清淨，　　是名具足戒。",
        "from": "T12n0352_004:0214c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說大迦葉問大寶積正法經卷第四",
        "from": "T12n0352_004:0214c11_100",
        "context_with_next_sentence": false
    }
]