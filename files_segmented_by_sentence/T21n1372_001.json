[
    {
        "source_sentence": "增慧陀羅尼經",
        "from": "T21n1372_001:0889b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T21n1372_001:0889b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1372_001:0889b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1372_001:0889b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時大慧菩薩住須彌山頂。",
        "from": "T21n1372_001:0889b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時諸天子等來詣菩薩。",
        "from": "T21n1372_001:0889b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬圍繞而為聽法。",
        "from": "T21n1372_001:0889b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有菩薩名童子相。",
        "from": "T21n1372_001:0889b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬白大慧菩薩。",
        "from": "T21n1372_001:0889b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願慈悲為我等故。",
        "from": "T21n1372_001:0889b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說增慧陀羅尼。",
        "from": "T21n1372_001:0889b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切少智鈍根愚昧眾生。",
        "from": "T21n1372_001:0889b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令使得聞增彼智慧。",
        "from": "T21n1372_001:0889b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時大慧菩薩即為宣說陀羅尼曰。",
        "from": "T21n1372_001:0889b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合他唵引閉祖閉祖鉢囉二合倪也二合嚩哩馱二合儞惹囉惹囉彌馱引嚩哩馱二合儞地哩地哩沒弟嚩哩馱二合彌娑嚩二合引賀引爾時大慧菩薩。",
        "from": "T21n1372_001:0889c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼已。",
        "from": "T21n1372_001:0889c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告童子相言。",
        "from": "T21n1372_001:0889c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸眾生智慧鈍劣。",
        "from": "T21n1372_001:0889c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根性暗昧多所忘失。",
        "from": "T21n1372_001:0889c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發志誠心於此增慧陀羅尼。",
        "from": "T21n1372_001:0889c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦書寫供養。",
        "from": "T21n1372_001:0889c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人速得廣大智慧明記不忘。",
        "from": "T21n1372_001:0889c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人以此真言。",
        "from": "T21n1372_001:0889c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦七遍或二七遍。",
        "from": "T21n1372_001:0889c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持水三合於卯時飲。",
        "from": "T21n1372_001:0889c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日如是飲至七箇月或八箇月。",
        "from": "T21n1372_001:0889c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然日記千頌。",
        "from": "T21n1372_001:0889c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不恒飲水亦能日記五百頌。",
        "from": "T21n1372_001:0889c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧漸增根性明利。",
        "from": "T21n1372_001:0889c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時童子相菩薩。",
        "from": "T21n1372_001:0889c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸天人信受奉行。",
        "from": "T21n1372_001:0889c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增慧陀羅尼經",
        "from": "T21n1372_001:0889c13_100",
        "context_with_next_sentence": false
    }
]