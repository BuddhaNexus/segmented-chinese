[
    {
        "source_sentence": "佛說救疾經一卷",
        "from": "T85n2878_001:1361b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛在娑羅雙樹□□□□□□□□□",
        "from": "T85n2878_001:1361b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難及無量諸天□□□□□□□□□□",
        "from": "T85n2878_001:1361b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切諸天人皆來集會□□□□□□□□□佛還正坐告阿難言吾□□□□□□□□諸弟子及諸菩薩摩訶□□□□□□□□國界安行人民無諸□□□□□□□□□亂世界和順善敬三寶□□□□□□□□侵害三寶者佛安行□□□□□□□□□見三人身體瘡穢不可□□□□□□□□墮落言語不轉衣服染污身負荷□□□□行復似疾人以乞耳為命。",
        "from": "T85n2878_001:1361b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛問此三人。",
        "from": "T85n2878_001:1361c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝何而來。",
        "from": "T85n2878_001:1361c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何國之子□□□□皆默然。",
        "from": "T85n2878_001:1361c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛便慇懃問之。",
        "from": "T85n2878_001:1361c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三問不答。",
        "from": "T85n2878_001:1361c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即以善方便化之。",
        "from": "T85n2878_001:1361c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三人答言。",
        "from": "T85n2878_001:1361c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等是幽厄之子。",
        "from": "T85n2878_001:1361c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用何苦問。",
        "from": "T85n2878_001:1361c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛問此三人。",
        "from": "T85n2878_001:1361c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝之所疾從何所起。",
        "from": "T85n2878_001:1361c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由何所得。",
        "from": "T85n2878_001:1361c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三人答言。",
        "from": "T85n2878_001:1361c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之所患不知何由。",
        "from": "T85n2878_001:1361c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺痛痒瘡遂增廣。",
        "from": "T85n2878_001:1361c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願世尊說病本緣使我開解。",
        "from": "T85n2878_001:1361c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即告阿難并集眷屬。",
        "from": "T85n2878_001:1361c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至七佛名字悉來集坐。",
        "from": "T85n2878_001:1361c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾為此人觀其宿業即調七佛。",
        "from": "T85n2878_001:1361c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一唯衛佛。",
        "from": "T85n2878_001:1361c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二式佛。",
        "from": "T85n2878_001:1361c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三隨葉佛。",
        "from": "T85n2878_001:1361c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四拘樓秦佛。",
        "from": "T85n2878_001:1361c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五拘那含牟尼佛。",
        "from": "T85n2878_001:1361c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六迦葉佛。",
        "from": "T85n2878_001:1361c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七釋迦文佛。",
        "from": "T85n2878_001:1361c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此七佛悉來集坐。",
        "from": "T85n2878_001:1361c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛復問七佛言。",
        "from": "T85n2878_001:1361c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三人病是誰與之。",
        "from": "T85n2878_001:1361c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七佛從西面各各答言。",
        "from": "T85n2878_001:1361c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無與者。",
        "from": "T85n2878_001:1361c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即入三昧禪定。",
        "from": "T85n2878_001:1361c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀三病知疾本緣。",
        "from": "T85n2878_001:1361c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七佛白言。",
        "from": "T85n2878_001:1361c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此疾不從他生。",
        "from": "T85n2878_001:1361c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即自招患發之與。",
        "from": "T85n2878_001:1361c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是金剛密迹見惡人。",
        "from": "T85n2878_001:1361c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛杵打之。",
        "from": "T85n2878_001:1361c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唾面生瘡。",
        "from": "T85n2878_001:1361c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬚眉即落。",
        "from": "T85n2878_001:1361c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由犯三寶使之然也。",
        "from": "T85n2878_001:1361c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即問。",
        "from": "T85n2878_001:1361c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛密迹復何因緣與此三人病也。",
        "from": "T85n2878_001:1361c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛答言。",
        "from": "T85n2878_001:1361c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我願恒在佛左右。",
        "from": "T85n2878_001:1361c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為護三寶故。",
        "from": "T85n2878_001:1361c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令惡人侵害如來善心沈沒。",
        "from": "T85n2878_001:1361c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見此三人。",
        "from": "T85n2878_001:1361c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一犯如來毀損尊像。",
        "from": "T85n2878_001:1361c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二犯正法淩盜經像斷滅聖教善法沈塞。",
        "from": "T85n2878_001:1361c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三犯聖僧欺害大眾。",
        "from": "T85n2878_001:1361c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使四道眾僧遂從陵滅。",
        "from": "T85n2878_001:1361c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛密迹白佛言。",
        "from": "T85n2878_001:1361c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設犯餘神病不如此。",
        "from": "T85n2878_001:1361c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬚眉不落。",
        "from": "T85n2878_001:1361c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其瘡痒膿世有可治。",
        "from": "T85n2878_001:1361c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯三寶者非世諦之師可能治也。",
        "from": "T85n2878_001:1361c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面目生光。",
        "from": "T85n2878_001:1361c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身中脂出。",
        "from": "T85n2878_001:1361c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛密迹白佛言。",
        "from": "T85n2878_001:1361c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我先願世尊得道之時。",
        "from": "T85n2878_001:1361c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒在左右。",
        "from": "T85n2878_001:1361c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為防三寶。",
        "from": "T85n2878_001:1361c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使眾魔惡鬼惡人不來侵惱。",
        "from": "T85n2878_001:1361c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有惡人淩辱竊盜三寶者。",
        "from": "T85n2878_001:1361c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我金剛杵碎其頭。",
        "from": "T85n2878_001:1361c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如阿梨樹落地七分。",
        "from": "T85n2878_001:1361c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛密迹白佛言。",
        "from": "T85n2878_001:1361c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三人者。",
        "from": "T85n2878_001:1362a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一從父母并及七世罪累相牽受此惡報。",
        "from": "T85n2878_001:1362a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或從自身微犯不覺。",
        "from": "T85n2878_001:1362a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有故犯不時懺悔。",
        "from": "T85n2878_001:1362a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪遂增厚。",
        "from": "T85n2878_001:1362a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治此惡病。",
        "from": "T85n2878_001:1362a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有歸心諸佛悔心七佛發露金剛至心願七佛威力可令消滅重罪。",
        "from": "T85n2878_001:1362a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告一切眾生。",
        "from": "T85n2878_001:1362a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡三寶物有人取者。",
        "from": "T85n2878_001:1362a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不問隱顯入手幾倍。",
        "from": "T85n2878_001:1362a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七佛答言。",
        "from": "T85n2878_001:1362a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是佛物入手十倍。",
        "from": "T85n2878_001:1362a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十年不還。",
        "from": "T85n2878_001:1362a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密迹生憤能使取者惡病。",
        "from": "T85n2878_001:1362a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是經像之物入手七倍。",
        "from": "T85n2878_001:1362a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七年不還。",
        "from": "T85n2878_001:1362a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使取者惡病。",
        "from": "T85n2878_001:1362a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是眾僧常住之物入手五倍。",
        "from": "T85n2878_001:1362a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五年不還。",
        "from": "T85n2878_001:1362a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故生欺捍能使取者惡病。",
        "from": "T85n2878_001:1362a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難白佛言。",
        "from": "T85n2878_001:1362a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊閻浮提人多生不信。",
        "from": "T85n2878_001:1362a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂無三寶侵犯者眾招致惡病罪積無數。",
        "from": "T85n2878_001:1362a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻浮提人殺父母害法儀。",
        "from": "T85n2878_001:1362a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及伯仲星歷有契者殺之。",
        "from": "T85n2878_001:1362a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正身能使惡病。",
        "from": "T85n2878_001:1362a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人保任是實者。",
        "from": "T85n2878_001:1362a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六齋之日佛前誓者。",
        "from": "T85n2878_001:1362a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使人交報。",
        "from": "T85n2878_001:1362a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或四天王下。",
        "from": "T85n2878_001:1362a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或太子下。",
        "from": "T85n2878_001:1362a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或使者下。",
        "from": "T85n2878_001:1362a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或三十三天下。",
        "from": "T85n2878_001:1362a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或大仙人下。",
        "from": "T85n2878_001:1362a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或剎命下。",
        "from": "T85n2878_001:1362a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或金剛力士下。",
        "from": "T85n2878_001:1362a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當下之日。",
        "from": "T85n2878_001:1362a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "注人善惡宜行善事不宜作惡。",
        "from": "T85n2878_001:1362a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有人偷劫經像之物。",
        "from": "T85n2878_001:1362a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知如故為使人惡病。",
        "from": "T85n2878_001:1362a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或舉持金銀銅鐵。",
        "from": "T85n2878_001:1362a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有闇取三寶之物及以錢粟絹帛之物。",
        "from": "T85n2878_001:1362a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逕年有如不還。",
        "from": "T85n2878_001:1362a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使人惡病。",
        "from": "T85n2878_001:1362a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或人呪誓燒佛形像。",
        "from": "T85n2878_001:1362a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推擬佛身。",
        "from": "T85n2878_001:1362a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或燒煮聖容。",
        "from": "T85n2878_001:1362a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "點滅經句。",
        "from": "T85n2878_001:1362a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或將內人僧伽藍內宿。",
        "from": "T85n2878_001:1362a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或將內人入佛塔裏。",
        "from": "T85n2878_001:1362a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共內人言語信要。",
        "from": "T85n2878_001:1362a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或共內人共相貪模。",
        "from": "T85n2878_001:1362a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或身生往及如此之事。",
        "from": "T85n2878_001:1362a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使人惡病。",
        "from": "T85n2878_001:1362a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此之事久久當病。",
        "from": "T85n2878_001:1362a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不至三年。",
        "from": "T85n2878_001:1362a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有人闇取他人齋米供齋之。",
        "from": "T85n2878_001:1362a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調知而故取能使人惡病。",
        "from": "T85n2878_001:1362a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人取他綵色與他內人。",
        "from": "T85n2878_001:1362a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受者知情與者因罪。",
        "from": "T85n2878_001:1362b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二人俱病。",
        "from": "T85n2878_001:1362b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有闇取僧尼雜器。",
        "from": "T85n2878_001:1362b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知而不還。",
        "from": "T85n2878_001:1362b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使人病。",
        "from": "T85n2878_001:1362b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人共經像牛驢行不淨行。",
        "from": "T85n2878_001:1362b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使人病。",
        "from": "T85n2878_001:1362b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖是畜生擬作經像乃至三年病。",
        "from": "T85n2878_001:1362b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有人將內人入三寶屋行不淨法。",
        "from": "T85n2878_001:1362b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使人病。",
        "from": "T85n2878_001:1362b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人妻掠淨行尼。",
        "from": "T85n2878_001:1362b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使人病。",
        "from": "T85n2878_001:1362b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人安經像屋裏。",
        "from": "T85n2878_001:1362b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無木函盛之在下。",
        "from": "T85n2878_001:1362b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共內人止宿。",
        "from": "T85n2878_001:1362b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使人病。",
        "from": "T85n2878_001:1362b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不出三年一切身招惡病。",
        "from": "T85n2878_001:1362b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜以苦重懺悔。",
        "from": "T85n2878_001:1362b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪從心生。",
        "from": "T85n2878_001:1362b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪從心滅。",
        "from": "T85n2878_001:1362b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心如天堂。",
        "from": "T85n2878_001:1362b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心如地獄。",
        "from": "T85n2878_001:1362b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰手是天堂。",
        "from": "T85n2878_001:1362b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆手是地獄。",
        "from": "T85n2878_001:1362b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲滅身中重罪。",
        "from": "T85n2878_001:1362b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心懺悔莫生懈退。",
        "from": "T85n2878_001:1362b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告七佛及金剛密迹諸大菩薩及諸眷屬。",
        "from": "T85n2878_001:1362b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三病人云何可濟。",
        "from": "T85n2878_001:1362b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛大士以發本緣。",
        "from": "T85n2878_001:1362b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今者可愍。",
        "from": "T85n2878_001:1362b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便方宜救濟得免此人病苦。",
        "from": "T85n2878_001:1362b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世稱如來大慈大悲。",
        "from": "T85n2878_001:1362b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七佛各各白言。",
        "from": "T85n2878_001:1362b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊眾生蠢蠢皆有佛性。",
        "from": "T85n2878_001:1362b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人之病易除消滅。",
        "from": "T85n2878_001:1362b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今自問之。",
        "from": "T85n2878_001:1362b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛密迹是吾長兄。",
        "from": "T85n2878_001:1362b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難是吾小弟。",
        "from": "T85n2878_001:1362b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾之眷屬數不可計。",
        "from": "T85n2878_001:1362b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿私陀仙能禁毒氣。",
        "from": "T85n2878_001:1362b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿羅羅仙能呪惡鬼。",
        "from": "T85n2878_001:1362b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十三天能下法水。",
        "from": "T85n2878_001:1362b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雪山大醫能降妙藥。",
        "from": "T85n2878_001:1362b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甘露法津能潤枯涸。",
        "from": "T85n2878_001:1362b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍世王身犯重罪。",
        "from": "T85n2878_001:1362b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚有可消。",
        "from": "T85n2878_001:1362b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身瘡除滅。",
        "from": "T85n2878_001:1362b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛以方便身復如故不消不滅。",
        "from": "T85n2878_001:1362b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是病者心中生也。",
        "from": "T85n2878_001:1362b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即以觀心虛實化作大坑。",
        "from": "T85n2878_001:1362b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方圓四千步。",
        "from": "T85n2878_001:1362b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿中火炭。",
        "from": "T85n2878_001:1362b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問阿闍世王。",
        "from": "T85n2878_001:1362b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝能入此大坑除滅汝罪。",
        "from": "T85n2878_001:1362b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瘡痍平復。",
        "from": "T85n2878_001:1362b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍世王言。",
        "from": "T85n2878_001:1362b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能滅我罪。",
        "from": "T85n2878_001:1362b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當即入。",
        "from": "T85n2878_001:1362b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍世王即以佛前燒香發願。",
        "from": "T85n2878_001:1362b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "踊身入火。",
        "from": "T85n2878_001:1362b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入已水擠掖變為浴池。",
        "from": "T85n2878_001:1362b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾罪消滅。",
        "from": "T85n2878_001:1362b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人堰長流水。",
        "from": "T85n2878_001:1362b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從上如堰在下則止。",
        "from": "T85n2878_001:1362b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從諸佛歸悔重罪。",
        "from": "T85n2878_001:1362b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則滅不信經語輕罪難滅。",
        "from": "T85n2878_001:1362b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告諸疾人。",
        "from": "T85n2878_001:1362c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾教汝。",
        "from": "T85n2878_001:1362c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但當至心百日之中請大德法師治齋。",
        "from": "T85n2878_001:1362c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日禮七佛名字。",
        "from": "T85n2878_001:1362c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日禮金剛密迹。",
        "from": "T85n2878_001:1362c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日禮無量壽佛。",
        "from": "T85n2878_001:1362c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日之中造成一卷救疾經。",
        "from": "T85n2878_001:1362c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百日之中行道懺悔百卷成就作濟度經。",
        "from": "T85n2878_001:1362c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可免此宿殃患耳。",
        "from": "T85n2878_001:1362c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫生不信。",
        "from": "T85n2878_001:1362c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瘡遂增廣。",
        "from": "T85n2878_001:1362c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語不虛。",
        "from": "T85n2878_001:1362c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云非謬。",
        "from": "T85n2878_001:1362c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法之言。",
        "from": "T85n2878_001:1362c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚深甚善。",
        "from": "T85n2878_001:1362c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛語大弟子。",
        "from": "T85n2878_001:1362c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經名救護眾生惡疾經。",
        "from": "T85n2878_001:1362c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令流布閻浮提人有疾者知聞。",
        "from": "T85n2878_001:1362c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救疾經一卷",
        "from": "T85n2878_001:1362c10_100",
        "context_with_next_sentence": false
    }
]