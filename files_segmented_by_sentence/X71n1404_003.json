{
    "X71n1404_003:0016b17_0": "兀菴和尚語錄卷下",
    "X71n1404_003:0016b19_0": "法語",
    "X71n1404_003:0016b20_0": "示關東法孫",
    "X71n1404_003:0016b21_0": "關東掌國法孫。",
    "X71n1404_003:0016b21_1": "誠至信向佛法。",
    "X71n1404_003:0016b21_2": "只欲發明己躬一大事。",
    "X71n1404_003:0016b22_3": "懷香袖紙。",
    "X71n1404_003:0016b22_4": "拜求法語。",
    "X71n1404_003:0016b22_5": "并袈裟。",
    "X71n1404_003:0016b22_6": "為究道之助。",
    "X71n1404_003:0016b22_7": "勉為引筆云。",
    "X71n1404_003:0016b24_0": "信為道源功德母。",
    "X71n1404_003:0016b24_1": "長養一切諸善根。",
    "X71n1404_003:0016b24_2": "所以諸佛法者。",
    "X71n1404_003:0016c01_0": "皆從信心之所生。",
    "X71n1404_003:0016c01_1": "但信心堅固。",
    "X71n1404_003:0016c01_2": "則善心堅固。",
    "X71n1404_003:0016c01_3": "若善心堅固。",
    "X71n1404_003:0016c02_4": "則道心堅固。",
    "X71n1404_003:0016c02_5": "若道心堅固。",
    "X71n1404_003:0016c02_6": "則佛心堅固。",
    "X71n1404_003:0016c02_7": "與天地同根。",
    "X71n1404_003:0016c03_8": "萬物同體。",
    "X71n1404_003:0016c03_9": "利人利物。",
    "X71n1404_003:0016c03_10": "亘古亘今。",
    "X71n1404_003:0016c03_11": "無一毫之差別者也。",
    "X71n1404_003:0016c04_12": "信心者。",
    "X71n1404_003:0016c04_13": "信向佛法僧三寶。",
    "X71n1404_003:0016c04_14": "敬信天地人神。",
    "X71n1404_003:0016c04_15": "孝養父母師長。",
    "X71n1404_003:0016c05_16": "一切事皆能敬信。",
    "X71n1404_003:0016c05_17": "無有退失。",
    "X71n1404_003:0016c05_18": "信能必到如來地者也。",
    "X71n1404_003:0016c06_19": "信向心如是。",
    "X71n1404_003:0016c06_20": "便能持五戒修十善。",
    "X71n1404_003:0016c06_21": "若持五戒堅固。",
    "X71n1404_003:0016c07_22": "善根不斷。",
    "X71n1404_003:0016c07_23": "必生人道。",
    "X71n1404_003:0016c07_24": "若修十善堅固。",
    "X71n1404_003:0016c07_25": "必生天道。",
    "X71n1404_003:0016c08_26": "若生生信心堅固。",
    "X71n1404_003:0016c08_27": "善根不斷者。",
    "X71n1404_003:0016c08_28": "即是三資粮。",
    "X71n1404_003:0016c08_29": "四加行位。",
    "X71n1404_003:0016c09_30": "菩薩十住位。",
    "X71n1404_003:0016c09_31": "十行位。",
    "X71n1404_003:0016c09_32": "十回向位。",
    "X71n1404_003:0016c09_33": "煖頂忍世第一位。",
    "X71n1404_003:0016c10_34": "是也。",
    "X71n1404_003:0016c10_35": "自此從凡入聖。",
    "X71n1404_003:0016c10_36": "十地位菩薩。",
    "X71n1404_003:0016c10_37": "乃至金剛心後。",
    "X71n1404_003:0016c11_0": "解脫道初。",
    "X71n1404_003:0016c11_1": "方且漸次入等覺位妙覺位。",
    "X71n1404_003:0016c11_2": "自十地位。",
    "X71n1404_003:0016c11_3": "至此妙覺位。",
    "X71n1404_003:0016c12_4": "謂之如來地。",
    "X71n1404_003:0016c12_5": "說法如雲。",
    "X71n1404_003:0016c12_6": "利生如雨。",
    "X71n1404_003:0016c12_7": "自利利它。",
    "X71n1404_003:0016c13_8": "度未度也。",
    "X71n1404_003:0016c13_9": "如來地者。",
    "X71n1404_003:0016c13_10": "即自己信向堅固之心。",
    "X71n1404_003:0016c13_11": "是也。",
    "X71n1404_003:0016c14_0": "持五戒修十善。",
    "X71n1404_003:0016c14_1": "堅固之心。",
    "X71n1404_003:0016c14_2": "是也。",
    "X71n1404_003:0016c14_3": "但心心堅固。",
    "X71n1404_003:0016c14_4": "位位增修。",
    "X71n1404_003:0016c15_5": "無有退失者。",
    "X71n1404_003:0016c15_6": "即是佛心。",
    "X71n1404_003:0016c15_7": "必到如來地也。",
    "X71n1404_003:0016c15_8": "縱饒修習到此。",
    "X71n1404_003:0016c16_9": "却不要執著。",
    "X71n1404_003:0016c16_10": "直須沒彼前來之位名。",
    "X71n1404_003:0016c16_11": "但彰自己之實行。",
    "X71n1404_003:0016c17_12": "吾亦不知。",
    "X71n1404_003:0016c17_13": "吾是誰。",
    "X71n1404_003:0016c17_14": "與天地同根。",
    "X71n1404_003:0016c17_15": "萬物同體。",
    "X71n1404_003:0016c17_16": "方有少分相應。",
    "X71n1404_003:0016c18_17": "戒律中教相中。",
    "X71n1404_003:0016c18_18": "所說一同。",
    "X71n1404_003:0016c18_19": "若要參透向上一著。",
    "X71n1404_003:0016c19_20": "須是離心意識參。",
    "X71n1404_003:0016c19_21": "出聖凡路學。",
    "X71n1404_003:0016c19_22": "方有趣向分。",
    "X71n1404_003:0016c20_0": "豈不見。",
    "X71n1404_003:0016c20_1": "趙州和尚有僧問云。",
    "X71n1404_003:0016c20_2": "狗子還有佛性也無。",
    "X71n1404_003:0016c20_3": "州答云。",
    "X71n1404_003:0016c21_4": "無。",
    "X71n1404_003:0016c21_5": "自古及今。",
    "X71n1404_003:0016c21_6": "惱亂天下衲僧。",
    "X71n1404_003:0016c21_7": "無有休日。",
    "X71n1404_003:0016c21_8": "法孫。",
    "X71n1404_003:0016c21_9": "但十二時中。",
    "X71n1404_003:0016c22_10": "行住坐臥。",
    "X71n1404_003:0016c22_11": "只向無之一字。",
    "X71n1404_003:0016c22_12": "切切留心。",
    "X71n1404_003:0016c22_13": "念念不捨。",
    "X71n1404_003:0016c23_14": "食息不忘。",
    "X71n1404_003:0016c23_15": "日久歲深。",
    "X71n1404_003:0016c23_16": "忽然參透。",
    "X71n1404_003:0016c23_17": "歷歷分明。",
    "X71n1404_003:0016c23_18": "絲毫無疑。",
    "X71n1404_003:0016c24_19": "自己本來面目。",
    "X71n1404_003:0016c24_20": "本地風光。",
    "X71n1404_003:0016c24_21": "頓現在前。",
    "X71n1404_003:0016c24_22": "便與從上諸佛諸祖。",
    "X71n1404_003:0017a01_23": "所得所證無別。",
    "X71n1404_003:0017a01_24": "此生它生。",
    "X71n1404_003:0017a01_25": "得大自在。",
    "X71n1404_003:0017a01_26": "得大解脫。",
    "X71n1404_003:0017a02_27": "便見從前信心善心佛心。",
    "X71n1404_003:0017a02_28": "自己心它人心。",
    "X71n1404_003:0017a02_29": "天地同根之心。",
    "X71n1404_003:0017a03_30": "萬物同體之心。",
    "X71n1404_003:0017a03_31": "無一毫差別。",
    "X71n1404_003:0017a03_32": "盡大千世界。",
    "X71n1404_003:0017a04_0": "日月星辰。",
    "X71n1404_003:0017a04_1": "山河大地。",
    "X71n1404_003:0017a04_2": "亦無一毫差別。",
    "X71n1404_003:0017a04_3": "於無差別中。",
    "X71n1404_003:0017a04_4": "千差萬別。",
    "X71n1404_003:0017a05_5": "信心亦如是。",
    "X71n1404_003:0017a05_6": "善心亦如是。",
    "X71n1404_003:0017a05_7": "佛心亦如是。",
    "X71n1404_003:0017a05_8": "乃至菩薩心。",
    "X71n1404_003:0017a06_9": "緣覺聲聞之心。",
    "X71n1404_003:0017a06_10": "天地人。",
    "X71n1404_003:0017a06_11": "飛走。",
    "X71n1404_003:0017a06_12": "山河大地之心。",
    "X71n1404_003:0017a07_0": "亦如是。",
    "X71n1404_003:0017a07_1": "心心既如是。",
    "X71n1404_003:0017a07_2": "可以治國治家。",
    "X71n1404_003:0017a07_3": "利人利物。",
    "X71n1404_003:0017a07_4": "盡未來際。",
    "X71n1404_003:0017a08_5": "無有退失。",
    "X71n1404_003:0017a08_6": "作是說者。",
    "X71n1404_003:0017a08_7": "聞是說者。",
    "X71n1404_003:0017a08_8": "誰復誰乎。",
    "X71n1404_003:0017a08_9": "(咄)從前汗馬無人識。",
    "X71n1404_003:0017a09_10": "只要重論葢代功。",
    "X71n1404_003:0017a10_0": "示源清藏主",
    "X71n1404_003:0017a11_0": "靈山密付。",
    "X71n1404_003:0017a11_1": "猶如話月。",
    "X71n1404_003:0017a11_2": "曹溪竪拂。",
    "X71n1404_003:0017a11_3": "猶如指月。",
    "X71n1404_003:0017a11_4": "遞代相承。",
    "X71n1404_003:0017a12_0": "炎天求雪。",
    "X71n1404_003:0017a12_1": "吾侍徑山圓照老師。",
    "X71n1404_003:0017a12_2": "雖歷多載。",
    "X71n1404_003:0017a12_3": "曾無一法可得。",
    "X71n1404_003:0017a13_4": "唯飢飽寒溫。",
    "X71n1404_003:0017a13_5": "能自知之。",
    "X71n1404_003:0017a13_6": "至於涉世匡徒。",
    "X71n1404_003:0017a13_7": "亦無毫髮差別。",
    "X71n1404_003:0017a14_8": "屢承法眷之約。",
    "X71n1404_003:0017a14_9": "因東望扶桑。",
    "X71n1404_003:0017a14_10": "有大乘根器。",
    "X71n1404_003:0017a14_11": "冒險越漠。",
    "X71n1404_003:0017a15_12": "觀國之光。",
    "X71n1404_003:0017a15_13": "復遭世緣所陷。",
    "X71n1404_003:0017a15_14": "悒悒之氣。",
    "X71n1404_003:0017a15_15": "而不能釋。",
    "X71n1404_003:0017a16_16": "源清藏主。",
    "X71n1404_003:0017a16_17": "贊佐叢社。",
    "X71n1404_003:0017a16_18": "表儀多眾。",
    "X71n1404_003:0017a16_19": "超卓偉偉。",
    "X71n1404_003:0017a16_20": "袖紙需語。",
    "X71n1404_003:0017a17_21": "以為究道之助。",
    "X71n1404_003:0017a17_22": "不容堅却。",
    "X71n1404_003:0017a17_23": "呵凍書此。",
    "X71n1404_003:0017a17_24": "祝之云。",
    "X71n1404_003:0017a17_25": "鼻端若有通天竅。",
    "X71n1404_003:0017a18_26": "可與吾出此氣也。",
    "X71n1404_003:0017a19_0": "示隆覺藏主",
    "X71n1404_003:0017a20_0": "隆覺藏主。",
    "X71n1404_003:0017a20_1": "久歷叢林。",
    "X71n1404_003:0017a20_2": "留心參學。",
    "X71n1404_003:0017a20_3": "以老僧示眾語中。",
    "X71n1404_003:0017a20_4": "有無之一字。",
    "X71n1404_003:0017a21_5": "於四威儀中。",
    "X71n1404_003:0017a21_6": "提撕不輟。",
    "X71n1404_003:0017a21_7": "昨五月八日夜。",
    "X71n1404_003:0017a21_8": "四更四點。",
    "X71n1404_003:0017a22_9": "就床之時。",
    "X71n1404_003:0017a22_10": "豁然頓息。",
    "X71n1404_003:0017a22_11": "自嘆曰。",
    "X71n1404_003:0017a22_12": "菩提妙果不難成。",
    "X71n1404_003:0017a23_13": "真善知識。",
    "X71n1404_003:0017a23_14": "實難遇也。",
    "X71n1404_003:0017a23_15": "信脚上床。",
    "X71n1404_003:0017a23_16": "信手整服。",
    "X71n1404_003:0017a23_17": "更無別念。",
    "X71n1404_003:0017a24_18": "身心如如。",
    "X71n1404_003:0017a24_19": "無彼此之非。",
    "X71n1404_003:0017a24_20": "如如復如如。",
    "X71n1404_003:0017a24_21": "專一守之。",
    "X71n1404_003:0017a24_22": "諸緣自空。",
    "X71n1404_003:0017b01_23": "唯自己耳。",
    "X71n1404_003:0017b01_24": "雖然如是。",
    "X71n1404_003:0017b01_25": "不知正邪如何。",
    "X71n1404_003:0017b01_26": "伏乞慈悲開示。",
    "X71n1404_003:0017b02_27": "老僧覽之是說。",
    "X71n1404_003:0017b02_28": "欣然有喜。",
    "X71n1404_003:0017b02_29": "元來殘羮餿飯。",
    "X71n1404_003:0017b02_30": "亦有人留心矣。",
    "X71n1404_003:0017b03_31": "既認得些子蹊徑。",
    "X71n1404_003:0017b03_32": "方可入道。",
    "X71n1404_003:0017b03_33": "所謂見道方修道。",
    "X71n1404_003:0017b04_34": "不見復何修。",
    "X71n1404_003:0017b04_35": "但專一守之。",
    "X71n1404_003:0017b04_36": "如執杖牧牛。",
    "X71n1404_003:0017b04_37": "勿令放逸。",
    "X71n1404_003:0017b05_38": "莫管相應不相應。",
    "X71n1404_003:0017b05_39": "正邪不正邪。",
    "X71n1404_003:0017b05_40": "出此沒彼。",
    "X71n1404_003:0017b05_41": "盡未來際。",
    "X71n1404_003:0017b06_42": "不動不變。",
    "X71n1404_003:0017b06_43": "始是工夫純熟。",
    "X71n1404_003:0017b06_44": "始是得力處。",
    "X71n1404_003:0017b06_45": "亦不得打淨潔毬子。",
    "X71n1404_003:0017b07_46": "更須知。",
    "X71n1404_003:0017b07_47": "南泉道。",
    "X71n1404_003:0017b07_48": "喚作如如。",
    "X71n1404_003:0017b07_49": "早是變了也。",
    "X71n1404_003:0017b08_0": "須和這無之一字。",
    "X71n1404_003:0017b08_1": "如如復如如。",
    "X71n1404_003:0017b08_2": "勝妙境界。",
    "X71n1404_003:0017b08_3": "一時颺却始得。",
    "X71n1404_003:0017b09_4": "豈不見道。",
    "X71n1404_003:0017b09_5": "法身有三種病二種光。",
    "X71n1404_003:0017b09_6": "一一透得。",
    "X71n1404_003:0017b09_7": "始解穩坐。",
    "X71n1404_003:0017b10_8": "更須知有向上一竅在。",
    "X71n1404_003:0017b10_9": "此語大有賺人處。",
    "X71n1404_003:0017b10_10": "若檢點得出。",
    "X71n1404_003:0017b11_11": "却再來老僧手裏請棒喫。",
    "X71n1404_003:0017b12_0": "示松島圓海長老",
    "X71n1404_003:0017b13_0": "佛法遍在一切處。",
    "X71n1404_003:0017b13_1": "一切眾生及國土。",
    "X71n1404_003:0017b13_2": "豈有東土西天。",
    "X71n1404_003:0017b14_0": "宋朝日本。",
    "X71n1404_003:0017b14_1": "分疆列界者耶。",
    "X71n1404_003:0017b14_2": "所以百億四天下佛法。",
    "X71n1404_003:0017b14_3": "始自靈山之所傳。",
    "X71n1404_003:0017b15_4": "靈山之佛法。",
    "X71n1404_003:0017b15_5": "乃自七佛之所傳。",
    "X71n1404_003:0017b15_6": "七佛之佛法。",
    "X71n1404_003:0017b16_7": "乃自賢劫千佛之所傳。",
    "X71n1404_003:0017b16_8": "賢劫千佛之佛法。",
    "X71n1404_003:0017b16_9": "乃自過去莊嚴劫之所傳。",
    "X71n1404_003:0017b17_10": "過去莊嚴劫佛法。",
    "X71n1404_003:0017b17_11": "乃自未有世界。",
    "X71n1404_003:0017b18_12": "未有佛祖。",
    "X71n1404_003:0017b18_13": "威音王已前之所傳。",
    "X71n1404_003:0017b18_14": "其所傳者。",
    "X71n1404_003:0017b18_15": "本無法可傳。",
    "X71n1404_003:0017b19_16": "但以心傳心。",
    "X71n1404_003:0017b19_17": "如水傳器。",
    "X71n1404_003:0017b19_18": "無傳之傳。",
    "X71n1404_003:0017b19_19": "所以流傳至今。",
    "X71n1404_003:0017b20_20": "絲毫不增。",
    "X71n1404_003:0017b20_21": "絲毫不減。",
    "X71n1404_003:0017b20_22": "若有有傳之傳。",
    "X71n1404_003:0017b20_23": "便成斷常之法。",
    "X71n1404_003:0017b21_24": "終成敗壞。",
    "X71n1404_003:0017b21_25": "無有今日之盛者也。",
    "X71n1404_003:0017b21_26": "我於然燈佛所。",
    "X71n1404_003:0017b22_0": "實無一法可得。",
    "X71n1404_003:0017b22_1": "誠哉是言。",
    "X71n1404_003:0017b22_2": "所以參禪只圖見性。",
    "X71n1404_003:0017b22_3": "如觀掌上。",
    "X71n1404_003:0017b23_4": "若不見性。",
    "X71n1404_003:0017b23_5": "無異盲人摸象。",
    "X71n1404_003:0017b23_6": "有何益哉。",
    "X71n1404_003:0017b23_7": "我宗無語句。",
    "X71n1404_003:0017b24_8": "亦無一法與人。",
    "X71n1404_003:0017b24_9": "若有一法與人。",
    "X71n1404_003:0017b24_10": "便成斷常之法。",
    "X71n1404_003:0017b24_11": "非正法也。",
    "X71n1404_003:0017c01_12": "從上佛佛授手。",
    "X71n1404_003:0017c01_13": "祖祖相傳。",
    "X71n1404_003:0017c01_14": "只貴所得所證。",
    "X71n1404_003:0017c01_15": "正知正見。",
    "X71n1404_003:0017c02_16": "廓然蕩豁。",
    "X71n1404_003:0017c02_17": "徹見本源。",
    "X71n1404_003:0017c02_18": "方謂之正知正見。",
    "X71n1404_003:0017c02_19": "繩繩有準。",
    "X71n1404_003:0017c03_20": "法法融通。",
    "X71n1404_003:0017c03_21": "或於十二分教明得者。",
    "X71n1404_003:0017c03_22": "或於教外明得者。",
    "X71n1404_003:0017c04_23": "或有未舉先知。",
    "X71n1404_003:0017c04_24": "未言先領者。",
    "X71n1404_003:0017c04_25": "或有無師自悟者。",
    "X71n1404_003:0017c05_0": "葢根性優劣不等。",
    "X71n1404_003:0017c05_1": "只要明自心見自性。",
    "X71n1404_003:0017c05_2": "宗眼明教眼明。",
    "X71n1404_003:0017c06_3": "如杲日當空。",
    "X71n1404_003:0017c06_4": "百億四天下。",
    "X71n1404_003:0017c06_5": "無幽不燭。",
    "X71n1404_003:0017c06_6": "何曾有絲毫隔礙來。",
    "X71n1404_003:0017c07_7": "若是所得所證。",
    "X71n1404_003:0017c07_8": "半明半滅。",
    "X71n1404_003:0017c07_9": "何緣得徹見本源。",
    "X71n1404_003:0017c08_0": "既不徹見本源。",
    "X71n1404_003:0017c08_1": "終成斷常之法。",
    "X71n1404_003:0017c08_2": "非正法也。",
    "X71n1404_003:0017c08_3": "[拚-ㄙ+ㄊ]得死工夫。",
    "X71n1404_003:0017c09_4": "方學得生活計。",
    "X71n1404_003:0017c09_5": "工夫不到。",
    "X71n1404_003:0017c09_6": "何得周圓。",
    "X71n1404_003:0017c09_7": "參須實參。",
    "X71n1404_003:0017c09_8": "悟須實悟。",
    "X71n1404_003:0017c10_9": "棒打石人頭。",
    "X71n1404_003:0017c10_10": "嚗嚗論實事。",
    "X71n1404_003:0017c10_11": "既得實證實悟處。",
    "X71n1404_003:0017c11_0": "與從上諸佛諸祖。",
    "X71n1404_003:0017c11_1": "無異無別。",
    "X71n1404_003:0017c11_2": "至於隨機應變。",
    "X71n1404_003:0017c11_3": "揑聚放開。",
    "X71n1404_003:0017c12_4": "自然得大自在。",
    "X71n1404_003:0017c12_5": "如雷如霆。",
    "X71n1404_003:0017c12_6": "有何隔礙來。",
    "X71n1404_003:0017c12_7": "以至出死入生。",
    "X71n1404_003:0017c13_8": "出此沒彼。",
    "X71n1404_003:0017c13_9": "有何隔礙來。",
    "X71n1404_003:0017c13_10": "松島圓海長老。",
    "X71n1404_003:0017c13_11": "曩遊宋朝。",
    "X71n1404_003:0017c14_12": "復回舊邦。",
    "X71n1404_003:0017c14_13": "贊佐法社。",
    "X71n1404_003:0017c14_14": "近董禪剎。",
    "X71n1404_003:0017c14_15": "既曰住持。",
    "X71n1404_003:0017c14_16": "便有主法之稱。",
    "X71n1404_003:0017c15_17": "為後學之規模。",
    "X71n1404_003:0017c15_18": "須要明吾宗之來源。",
    "X71n1404_003:0017c15_19": "開人天之正眼。",
    "X71n1404_003:0017c16_20": "方且不枉匡徒之職矣。",
    "X71n1404_003:0017c16_21": "袖紙需語。",
    "X71n1404_003:0017c16_22": "信筆不覺忉怛。",
    "X71n1404_003:0017c18_0": "示成道大師",
    "X71n1404_003:0017c19_0": "成道大師。",
    "X71n1404_003:0017c19_1": "見任住持肥後州報恩寺。",
    "X71n1404_003:0017c19_2": "已經數載。",
    "X71n1404_003:0017c19_3": "內外享合。",
    "X71n1404_003:0017c20_4": "緇白歸向。",
    "X71n1404_003:0017c20_5": "切為自己一段大事因緣。",
    "X71n1404_003:0017c20_6": "胸次礙膺之物未釋。",
    "X71n1404_003:0017c21_7": "往年雖曾求師指迷。",
    "X71n1404_003:0017c21_8": "葢緣歲月蹉跎。",
    "X71n1404_003:0017c21_9": "未有與決。",
    "X71n1404_003:0017c22_10": "思之世間名利之役。",
    "X71n1404_003:0017c22_11": "無有休歇。",
    "X71n1404_003:0017c22_12": "於自己全無所益。",
    "X71n1404_003:0017c23_13": "由是暫假不遠數千里之遙。",
    "X71n1404_003:0017c23_14": "僕僕來參。",
    "X71n1404_003:0017c23_15": "只要決此一事。",
    "X71n1404_003:0017c24_16": "了了分明。",
    "X71n1404_003:0017c24_17": "免致虗生浪死之苦。",
    "X71n1404_003:0017c24_18": "不辜負出家之志。",
    "X71n1404_003:0018a01_19": "只求直截。",
    "X71n1404_003:0018a01_20": "數句繁多難記矣。",
    "X71n1404_003:0018a01_21": "老僧每見尋言逐句。",
    "X71n1404_003:0018a02_0": "求玄求妙者。",
    "X71n1404_003:0018a02_1": "痛掃之。",
    "X71n1404_003:0018a02_2": "不欲特地。",
    "X71n1404_003:0018a02_3": "不見道。",
    "X71n1404_003:0018a02_4": "我宗無語句。",
    "X71n1404_003:0018a03_0": "亦無一法與人。",
    "X71n1404_003:0018a03_1": "若只求數句。",
    "X71n1404_003:0018a03_2": "亦是繁了。",
    "X71n1404_003:0018a03_3": "若有一句到汝。",
    "X71n1404_003:0018a04_4": "即埋沒汝也。",
    "X71n1404_003:0018a04_5": "若無一句到汝。",
    "X71n1404_003:0018a04_6": "即辜負老僧。",
    "X71n1404_003:0018a04_7": "有句無句。",
    "X71n1404_003:0018a05_8": "一時截斷。",
    "X71n1404_003:0018a05_9": "昔日寂壽道人。",
    "X71n1404_003:0018a05_10": "參昭覺圓悟禪師。",
    "X71n1404_003:0018a05_11": "指示不是心不是佛不是物。",
    "X71n1404_003:0018a06_12": "提撕既久。",
    "X71n1404_003:0018a06_13": "忽然契悟。",
    "X71n1404_003:0018a06_14": "凡有問答。",
    "X71n1404_003:0018a07_15": "如流無滯。",
    "X71n1404_003:0018a07_16": "直往淮西。",
    "X71n1404_003:0018a07_17": "參五祖演和尚。",
    "X71n1404_003:0018a07_18": "乃圓悟法嗣師也。",
    "X71n1404_003:0018a08_19": "纔參禮了。",
    "X71n1404_003:0018a08_20": "五祖問云。",
    "X71n1404_003:0018a08_21": "汝參什麼人來。",
    "X71n1404_003:0018a08_22": "寂壽云。",
    "X71n1404_003:0018a08_23": "參昭覺和尚來。",
    "X71n1404_003:0018a09_24": "祖遂問云。",
    "X71n1404_003:0018a09_25": "釋迦彌勒是他奴。",
    "X71n1404_003:0018a09_26": "他是阿誰。",
    "X71n1404_003:0018a10_0": "寂壽拊掌大笑云。",
    "X71n1404_003:0018a10_1": "大小大五祖老翁。",
    "X71n1404_003:0018a10_2": "元來不識他在。",
    "X71n1404_003:0018a11_0": "五祖便知是了徹底人。",
    "X71n1404_003:0018a11_1": "遂與印可。",
    "X71n1404_003:0018a11_2": "自此七縱八橫。",
    "X71n1404_003:0018a11_3": "得大自在。",
    "X71n1404_003:0018a12_4": "佛之與祖。",
    "X71n1404_003:0018a12_5": "到他面前。",
    "X71n1404_003:0018a12_6": "不滿一笑。",
    "X71n1404_003:0018a12_7": "更有何生死礙慮。",
    "X71n1404_003:0018a13_8": "掛胸中耶。",
    "X71n1404_003:0018a13_9": "成道大師。",
    "X71n1404_003:0018a13_10": "但將此不是心不是佛不是物。",
    "X71n1404_003:0018a14_11": "十二時中。",
    "X71n1404_003:0018a14_12": "行住坐臥。",
    "X71n1404_003:0018a14_13": "喜怒憂樂。",
    "X71n1404_003:0018a14_14": "片時不要放捨。",
    "X71n1404_003:0018a15_0": "久久便見倒斷。",
    "X71n1404_003:0018a15_1": "非但超他總持。",
    "X71n1404_003:0018a15_2": "末山劉鐵磨寂壽輩一頭地。",
    "X71n1404_003:0018a16_3": "亦乃翻笑建長老翁。",
    "X71n1404_003:0018a16_4": "恣將陳年橘皮。",
    "X71n1404_003:0018a16_5": "以之為火。",
    "X71n1404_003:0018a17_6": "鼓弄人家男女。",
    "X71n1404_003:0018a17_7": "敗缺不少。",
    "X71n1404_003:0018a17_8": "法位大師。",
    "X71n1404_003:0018a17_9": "既是手足。",
    "X71n1404_003:0018a17_10": "不必別紙。",
    "X71n1404_003:0018a19_0": "示正傳長老(禪師號宏覺)",
    "X71n1404_003:0018a20_0": "嗣法小師慧安長老。",
    "X71n1404_003:0018a20_1": "號東巖。",
    "X71n1404_003:0018a20_2": "建長聚首。",
    "X71n1404_003:0018a20_3": "孜孜究道。",
    "X71n1404_003:0018a20_4": "請益不輟。",
    "X71n1404_003:0018a21_5": "別後聞之。",
    "X71n1404_003:0018a21_6": "開法住持。",
    "X71n1404_003:0018a21_7": "大興宗社。",
    "X71n1404_003:0018a21_8": "甚慰老懷。",
    "X71n1404_003:0018a21_9": "顓書遠投。",
    "X71n1404_003:0018a22_10": "懇求法語。",
    "X71n1404_003:0018a22_11": "用侍者捧呈云。",
    "X71n1404_003:0018a22_12": "節次請益。",
    "X71n1404_003:0018a22_13": "伏蒙開示因緣。",
    "X71n1404_003:0018a23_14": "欲乞親染而寶之。",
    "X71n1404_003:0018a23_15": "答云。",
    "X71n1404_003:0018a23_16": "今為老懶。",
    "X71n1404_003:0018a23_17": "猒煩却之。",
    "X71n1404_003:0018a24_0": "重復啟請。",
    "X71n1404_003:0018a24_1": "信筆以贈云。",
    "X71n1404_003:0018a24_2": "語底默底不是。",
    "X71n1404_003:0018a24_3": "非語非默更非。",
    "X71n1404_003:0018b01_4": "透出重重關捩。",
    "X71n1404_003:0018b01_5": "而況猶涉厘微。",
    "X71n1404_003:0018b01_6": "豈不見。",
    "X71n1404_003:0018b01_7": "靈山拈起。",
    "X71n1404_003:0018b02_0": "迦葉攢眉。",
    "X71n1404_003:0018b02_1": "得便宜是落便宜。",
    "X71n1404_003:0018b02_2": "不是苦心人不知。",
    "X71n1404_003:0018b02_3": "所以每遇問答酬倡。",
    "X71n1404_003:0018b03_4": "如空谷答響。",
    "X71n1404_003:0018b03_5": "豈容嚵啄哉。",
    "X71n1404_003:0018b03_6": "達磨不來震旦。",
    "X71n1404_003:0018b04_7": "老僧不遊日本。",
    "X71n1404_003:0018b04_8": "單傳直付東巖。",
    "X71n1404_003:0018b04_9": "廣為人天宣演。",
    "X71n1404_003:0018b05_0": "(咦)輸機是筭人之本。",
    "X71n1404_003:0018b05_1": "(復指侍者云)我宗無語句。",
    "X71n1404_003:0018b05_2": "說甚閑公案。",
    "X71n1404_003:0018b06_3": "(擲筆噓一聲)侍者破顏微笑。",
    "X71n1404_003:0018b06_4": "復云。",
    "X71n1404_003:0018b06_5": "老僧今日失利。",
    "X71n1404_003:0018b08_0": "示院豪長老",
    "X71n1404_003:0018b09_0": "弘持佛法。",
    "X71n1404_003:0018b09_1": "在人不在法。",
    "X71n1404_003:0018b09_2": "人能弘道。",
    "X71n1404_003:0018b09_3": "非道弘人。",
    "X71n1404_003:0018b09_4": "是也。",
    "X71n1404_003:0018b09_5": "既曰住持。",
    "X71n1404_003:0018b10_6": "却與閑衲子不同。",
    "X71n1404_003:0018b10_7": "須當潔己精專。",
    "X71n1404_003:0018b10_8": "為後學者法。",
    "X71n1404_003:0018b11_9": "應機接物。",
    "X71n1404_003:0018b11_10": "亦須隨己力量。",
    "X71n1404_003:0018b11_11": "切防過與不及。",
    "X71n1404_003:0018b11_12": "從上來大有規則。",
    "X71n1404_003:0018b12_13": "當一一依而行之乃善。",
    "X71n1404_003:0018b12_14": "長老經歷多年。",
    "X71n1404_003:0018b12_15": "必能熏煉不失。",
    "X71n1404_003:0018b13_16": "若是未能徹證大法。",
    "X71n1404_003:0018b13_17": "亦須退步就己。",
    "X71n1404_003:0018b13_18": "窮究教徹。",
    "X71n1404_003:0018b14_19": "方是千了百當。",
    "X71n1404_003:0018b14_20": "若只記持言句。",
    "X71n1404_003:0018b14_21": "蘊在胸中。",
    "X71n1404_003:0018b14_22": "以為我能我解。",
    "X71n1404_003:0018b15_23": "最是障道之本。",
    "X71n1404_003:0018b15_24": "大法無由發明。",
    "X71n1404_003:0018b15_25": "終不濟事。",
    "X71n1404_003:0018b16_26": "且如住院一事。",
    "X71n1404_003:0018b16_27": "終日役役。",
    "X71n1404_003:0018b16_28": "無有了期。",
    "X71n1404_003:0018b16_29": "但按其綱紀大槩。",
    "X71n1404_003:0018b17_30": "碎事撥向一邊。",
    "X71n1404_003:0018b17_31": "忙裏偷閑。",
    "X71n1404_003:0018b17_32": "直將僧問雲門和尚云。",
    "X71n1404_003:0018b18_33": "不起一念。",
    "X71n1404_003:0018b18_34": "還有過也無。",
    "X71n1404_003:0018b18_35": "答云。",
    "X71n1404_003:0018b18_36": "須彌山。",
    "X71n1404_003:0018b18_37": "但將此一轉語。",
    "X71n1404_003:0018b19_38": "時時提撕。",
    "X71n1404_003:0018b19_39": "十二時中。",
    "X71n1404_003:0018b19_40": "絲毫勿令退失。",
    "X71n1404_003:0018b19_41": "日就月將。",
    "X71n1404_003:0018b19_42": "噁地一聲。",
    "X71n1404_003:0018b20_43": "便能徹見本有之性。",
    "X71n1404_003:0018b20_44": "本來面目。",
    "X71n1404_003:0018b20_45": "虗而靈空而妙。",
    "X71n1404_003:0018b21_46": "超然獨脫。",
    "X71n1404_003:0018b21_47": "與從上佛祖。",
    "X71n1404_003:0018b21_48": "把手共行。",
    "X71n1404_003:0018b21_49": "出生入死。",
    "X71n1404_003:0018b21_50": "得大自在。",
    "X71n1404_003:0018b22_51": "豈不偉歟。",
    "X71n1404_003:0018b22_52": "世良田當代住持院豪長老。",
    "X71n1404_003:0018b22_53": "昨冬老僧乍到建長。",
    "X71n1404_003:0018b23_54": "先辱遠訪。",
    "X71n1404_003:0018b23_55": "越春袖紙來語。",
    "X71n1404_003:0018b23_56": "以為究道之助。",
    "X71n1404_003:0018b24_57": "信筆姑塞其誠矣。",
    "X71n1404_003:0018c01_0": "示小師景用",
    "X71n1404_003:0018c02_0": "徒弟景用侍者。",
    "X71n1404_003:0018c02_1": "執侍既久。",
    "X71n1404_003:0018c02_2": "奉養懃渠。",
    "X71n1404_003:0018c02_3": "始終守節。",
    "X71n1404_003:0018c02_4": "併去雜交。",
    "X71n1404_003:0018c03_5": "顓切向道。",
    "X71n1404_003:0018c03_6": "炷拜求一語。",
    "X71n1404_003:0018c03_7": "懷抱決了己躬一大事。",
    "X71n1404_003:0018c04_0": "即答云。",
    "X71n1404_003:0018c04_1": "我宗無語句。",
    "X71n1404_003:0018c04_2": "亦無一法與人。",
    "X71n1404_003:0018c04_3": "參禪只圖見性。",
    "X71n1404_003:0018c05_0": "若得見性。",
    "X71n1404_003:0018c05_1": "方是千了百當。",
    "X71n1404_003:0018c05_2": "從上無數大劫而來。",
    "X71n1404_003:0018c05_3": "諸佛諸祖。",
    "X71n1404_003:0018c06_4": "千聖萬聖。",
    "X71n1404_003:0018c06_5": "亦只明自心見自性。",
    "X71n1404_003:0018c06_6": "傳此法。",
    "X71n1404_003:0018c06_7": "此法者。",
    "X71n1404_003:0018c07_0": "無傳之傳。",
    "X71n1404_003:0018c07_1": "是為真傳。",
    "X71n1404_003:0018c07_2": "名正法也。",
    "X71n1404_003:0018c07_3": "若有傳之傳。",
    "X71n1404_003:0018c07_4": "是為妄傳。",
    "X71n1404_003:0018c08_5": "非正法也。",
    "X71n1404_003:0018c08_6": "但每日苦樂逆順。",
    "X71n1404_003:0018c08_7": "逐旋消遣。",
    "X71n1404_003:0018c08_8": "惟要參究自己。",
    "X71n1404_003:0018c09_9": "工夫片時不輟。",
    "X71n1404_003:0018c09_10": "久久必獲感驗也。",
    "X71n1404_003:0018c09_11": "驀然明自心見自性。",
    "X71n1404_003:0018c10_12": "盡乾坤大地。",
    "X71n1404_003:0018c10_13": "總是自己全體作用。",
    "X71n1404_003:0018c10_14": "更有何疑慮者哉。",
    "X71n1404_003:0018c11_15": "今為老病力怯。",
    "X71n1404_003:0018c11_16": "不及書而却之。",
    "X71n1404_003:0018c11_17": "侍者忽問云。",
    "X71n1404_003:0018c12_0": "昔日馬大師不安。",
    "X71n1404_003:0018c12_1": "院主進前。",
    "X71n1404_003:0018c12_2": "徐徐問云。",
    "X71n1404_003:0018c12_3": "和尚近日尊位如何。",
    "X71n1404_003:0018c13_4": "馬祖答云。",
    "X71n1404_003:0018c13_5": "日面佛月面佛時如何。",
    "X71n1404_003:0018c13_6": "老僧答云。",
    "X71n1404_003:0018c14_0": "和贓捉敗。",
    "X71n1404_003:0018c14_1": "即頌示之曰。",
    "X71n1404_003:0018c14_2": "日面佛月面佛。",
    "X71n1404_003:0018c14_3": "賊被賊捉見贓物。",
    "X71n1404_003:0018c15_4": "贓賊一時推勘圓。",
    "X71n1404_003:0018c15_5": "漢州姜與邠州鐵。",
    "X71n1404_003:0018c15_6": "(復頌曰)日面佛月面佛。",
    "X71n1404_003:0018c16_7": "病勢元因自執著。",
    "X71n1404_003:0018c16_8": "只消三片漢州姜。",
    "X71n1404_003:0018c16_9": "煎取一服應驗藥。",
    "X71n1404_003:0018c17_10": "(呵呵)即書以遺。",
    "X71n1404_003:0018c18_0": "序跋",
    "X71n1404_003:0018c19_0": "性空序",
    "X71n1404_003:0018c20_0": "撥草瞻風。",
    "X71n1404_003:0018c20_1": "只圖見性。",
    "X71n1404_003:0018c20_2": "果能見性。",
    "X71n1404_003:0018c20_3": "十方虗空。",
    "X71n1404_003:0018c20_4": "悉皆消殞。",
    "X71n1404_003:0018c21_0": "山河大地。",
    "X71n1404_003:0018c21_1": "依而建立。",
    "X71n1404_003:0018c21_2": "八解六通。",
    "X71n1404_003:0018c21_3": "由茲發現。",
    "X71n1404_003:0018c21_4": "豈不見。",
    "X71n1404_003:0018c21_5": "碧眼胡云。",
    "X71n1404_003:0018c22_6": "不立文字。",
    "X71n1404_003:0018c22_7": "直指人心。",
    "X71n1404_003:0018c22_8": "見性成佛。",
    "X71n1404_003:0018c22_9": "無端粘牙帶齒。",
    "X71n1404_003:0018c23_10": "衲僧門下。",
    "X71n1404_003:0018c23_11": "猶隔重關。",
    "X71n1404_003:0018c23_12": "義侍者號性空。",
    "X71n1404_003:0018c23_13": "求敘語。",
    "X71n1404_003:0018c23_14": "因詰之云。",
    "X71n1404_003:0018c24_15": "既曰性空。",
    "X71n1404_003:0018c24_16": "是中還著得元字脚否。",
    "X71n1404_003:0018c24_17": "義默而不答。",
    "X71n1404_003:0019a01_0": "復指之云。",
    "X71n1404_003:0019a01_1": "錯。",
    "X71n1404_003:0019a01_2": "姑與引筆。",
    "X71n1404_003:0019a02_0": "跋敬侍者頌軸",
    "X71n1404_003:0019a03_0": "妙喜老漢。",
    "X71n1404_003:0019a03_1": "初發足游方時。",
    "X71n1404_003:0019a03_2": "先以四句偈。",
    "X71n1404_003:0019a03_3": "辭之受業。",
    "X71n1404_003:0019a03_4": "其後句云。",
    "X71n1404_003:0019a04_5": "且喜今朝離火坑。",
    "X71n1404_003:0019a04_6": "前輩標格。",
    "X71n1404_003:0019a04_7": "打頭便有吞佛吞祖底氣槩。",
    "X71n1404_003:0019a05_8": "若不是川巴子。",
    "X71n1404_003:0019a05_9": "如何羅籠得住。",
    "X71n1404_003:0019a05_10": "自後花木瓜種族。",
    "X71n1404_003:0019a06_11": "罕有出乎其類。",
    "X71n1404_003:0019a06_12": "拔乎其萃者焉。",
    "X71n1404_003:0019a06_13": "敬侍者鄉談一同。",
    "X71n1404_003:0019a07_14": "九華豐林受經。",
    "X71n1404_003:0019a07_15": "仙骨亦能越格。",
    "X71n1404_003:0019a07_16": "初發足時。",
    "X71n1404_003:0019a07_17": "府僉祕書。",
    "X71n1404_003:0019a08_18": "贈以伽陀。",
    "X71n1404_003:0019a08_19": "嘉尚其銳志。",
    "X71n1404_003:0019a08_20": "及到龍游雙徑。",
    "X71n1404_003:0019a08_21": "群英次其韻而美之。",
    "X71n1404_003:0019a09_22": "一家纔有事。",
    "X71n1404_003:0019a09_23": "引得百家忙。",
    "X71n1404_003:0019a09_24": "需一語於其後。",
    "X71n1404_003:0019a10_25": "即就其韻一字。",
    "X71n1404_003:0019a10_26": "酬之云休。",
    "X71n1404_003:0019a11_0": "跋弈東峴住常州橫林淨慈賀頌軸",
    "X71n1404_003:0019a12_0": "澗東一脉。",
    "X71n1404_003:0019a12_1": "曲曲彎彎。",
    "X71n1404_003:0019a12_2": "分枝列派。",
    "X71n1404_003:0019a12_3": "接於奉川。",
    "X71n1404_003:0019a12_4": "正出東峴。",
    "X71n1404_003:0019a13_0": "滔滔聒聒。",
    "X71n1404_003:0019a13_1": "注入梁溪。",
    "X71n1404_003:0019a13_2": "浪打濤翻。",
    "X71n1404_003:0019a13_3": "蝦蠏魚龍。",
    "X71n1404_003:0019a13_4": "游泳自若。",
    "X71n1404_003:0019a14_0": "引得西湖群英。",
    "X71n1404_003:0019a14_1": "揚清激濁。",
    "X71n1404_003:0019a14_2": "風波遍地。",
    "X71n1404_003:0019a14_3": "余見其源源不已。",
    "X71n1404_003:0019a15_4": "姑以坯土塞之。",
    "X71n1404_003:0019a16_0": "跋大火中燒金剛經不壞",
    "X71n1404_003:0019a17_0": "[宋-木+取]明寺殿。",
    "X71n1404_003:0019a17_1": "信心堅固。",
    "X71n1404_003:0019a17_2": "如金中之剛。",
    "X71n1404_003:0019a17_3": "親染金字金剛般若經。",
    "X71n1404_003:0019a18_4": "直得入水不能溺。",
    "X71n1404_003:0019a18_5": "入火不能燒。",
    "X71n1404_003:0019a18_6": "只以此見堅固之心。",
    "X71n1404_003:0019a19_7": "盡未來際。",
    "X71n1404_003:0019a19_8": "等金剛而不壞者也。",
    "X71n1404_003:0019a19_9": "因觀火中之經。",
    "X71n1404_003:0019a20_0": "合掌頂戴。",
    "X71n1404_003:0019a20_1": "嘆未曾有。",
    "X71n1404_003:0019a20_2": "故書其後云。",
    "X71n1404_003:0019a21_0": "跋了侍者頌軸",
    "X71n1404_003:0019a22_0": "禪了侍者。",
    "X71n1404_003:0019a22_1": "遊歷宋朝。",
    "X71n1404_003:0019a22_2": "遍參諸老。",
    "X71n1404_003:0019a22_3": "湖海同流。",
    "X71n1404_003:0019a22_4": "寂巖號之。",
    "X71n1404_003:0019a23_0": "揄揚之德。",
    "X71n1404_003:0019a23_1": "頌成巨軸。",
    "X71n1404_003:0019a23_2": "并歸帆之帙。",
    "X71n1404_003:0019a23_3": "併捧呈。",
    "X71n1404_003:0019a23_4": "葢老眼矇矓。",
    "X71n1404_003:0019a24_5": "略觀彷彿。",
    "X71n1404_003:0019a24_6": "其中有一句子。",
    "X71n1404_003:0019a24_7": "直是無巴鼻。",
    "X71n1404_003:0019a24_8": "由是急卷而復還之。",
    "X71n1404_003:0019b02_0": "跋大眾賀[宋-木+取]明寺殿悟道頌軸靈山密付。",
    "X71n1404_003:0019b03_1": "只要密傳。",
    "X71n1404_003:0019b03_2": "剗地不密。",
    "X71n1404_003:0019b03_3": "惡聲流布。",
    "X71n1404_003:0019b03_4": "遞相鈍置。",
    "X71n1404_003:0019b04_0": "浩浩至今。",
    "X71n1404_003:0019b04_1": "昨來密室付授[宋-木+取]明寺殿。",
    "X71n1404_003:0019b04_2": "只要密傳。",
    "X71n1404_003:0019b04_3": "剗地不密。",
    "X71n1404_003:0019b05_4": "言下忽然打失鼻孔。",
    "X71n1404_003:0019b05_5": "被人指證。",
    "X71n1404_003:0019b05_6": "案沓如牛腰。",
    "X71n1404_003:0019b05_7": "且道因誰致得。",
    "X71n1404_003:0019b06_8": "(咄)來說是非者。",
    "X71n1404_003:0019b06_9": "便是是非人。",
    "X71n1404_003:0019b07_0": "跋安忍子大智律師草書心經",
    "X71n1404_003:0019b08_0": "竺皇先生。",
    "X71n1404_003:0019b08_1": "四處十六會。",
    "X71n1404_003:0019b08_2": "慈悲之故。",
    "X71n1404_003:0019b08_3": "有落草之談。",
    "X71n1404_003:0019b08_4": "掬其旨歸。",
    "X71n1404_003:0019b09_5": "八十餘科。",
    "X71n1404_003:0019b09_6": "不出乎一紙。",
    "X71n1404_003:0019b09_7": "靈芝老子。",
    "X71n1404_003:0019b09_8": "守南山家法外。",
    "X71n1404_003:0019b10_9": "筆陣掃雲煙。",
    "X71n1404_003:0019b10_10": "無故隨後草窠裏輥。",
    "X71n1404_003:0019b10_11": "雖則貫古通今。",
    "X71n1404_003:0019b11_0": "正眼看來。",
    "X71n1404_003:0019b11_1": "草氣太甚。",
    "X71n1404_003:0019b12_0": "佛祖贊",
    "X71n1404_003:0019b13_0": "出山相",
    "X71n1404_003:0019b14_0": "入山出山。",
    "X71n1404_003:0019b14_1": "何異何別。",
    "X71n1404_003:0019b14_2": "六年所成。",
    "X71n1404_003:0019b14_3": "一時漏泄。",
    "X71n1404_003:0019b14_4": "那堪滿口嚼冰雪。",
    "X71n1404_003:0019b16_0": "渡江達磨",
    "X71n1404_003:0019b17_0": "道箇不識。",
    "X71n1404_003:0019b17_1": "自生荊棘。",
    "X71n1404_003:0019b17_2": "悽悽渡江。",
    "X71n1404_003:0019b17_3": "忍羞面壁。",
    "X71n1404_003:0019b17_4": "賴有神光與雪屈。",
    "X71n1404_003:0019b19_0": "寒山拾得",
    "X71n1404_003:0019b20_0": "指東畫西。",
    "X71n1404_003:0019b20_1": "眼笑眉垂。",
    "X71n1404_003:0019b20_2": "心似秋月。",
    "X71n1404_003:0019b20_3": "髮如亂絲。",
    "X71n1404_003:0019b20_4": "吟句不成句。",
    "X71n1404_003:0019b21_5": "題詩不是詩。",
    "X71n1404_003:0019b21_6": "豐干輕饒舌。",
    "X71n1404_003:0019b21_7": "敗缺一時知。",
    "X71n1404_003:0019b21_8": "善哉苦哉。",
    "X71n1404_003:0019b22_0": "敢稱七佛之師。",
    "X71n1404_003:0019b23_0": "行道持數珠觀音",
    "X71n1404_003:0019b24_0": "從聞思修。",
    "X71n1404_003:0019b24_1": "入三摩地。",
    "X71n1404_003:0019b24_2": "八萬行門。",
    "X71n1404_003:0019b24_3": "一十九類。",
    "X71n1404_003:0019b24_4": "尋聲救苦越塵沙。",
    "X71n1404_003:0019c01_5": "一串數珠數不已。",
    "X71n1404_003:0019c02_0": "布袋",
    "X71n1404_003:0019c03_0": "杖頭挑百億乾坤。",
    "X71n1404_003:0019c03_1": "布袋貯三千世界。",
    "X71n1404_003:0019c03_2": "閙市叢中等箇人。",
    "X71n1404_003:0019c04_3": "不知誰是知音者(咄)。",
    "X71n1404_003:0019c05_0": "普化",
    "X71n1404_003:0019c06_0": "踢倒飯床。",
    "X71n1404_003:0019c06_1": "特地乖張。",
    "X71n1404_003:0019c06_2": "指空話空。",
    "X71n1404_003:0019c06_3": "撤顛撤狂。",
    "X71n1404_003:0019c06_4": "木槵拈來換人眼。",
    "X71n1404_003:0019c07_5": "贏得惡聲滿大唐。",
    "X71n1404_003:0019c08_0": "魚婦觀音",
    "X71n1404_003:0019c09_0": "提起活鱍鱍。",
    "X71n1404_003:0019c09_1": "馬郎亦被惑。",
    "X71n1404_003:0019c09_2": "度生雖願重。",
    "X71n1404_003:0019c09_3": "那知成敗缺。",
    "X71n1404_003:0019c10_0": "靈照女",
    "X71n1404_003:0019c11_0": "拈將破笊篱。",
    "X71n1404_003:0019c11_1": "風前賣與誰。",
    "X71n1404_003:0019c11_2": "攙行奪市處。",
    "X71n1404_003:0019c11_3": "非獨老爺知。",
    "X71n1404_003:0019c12_0": "無準和尚頂相",
    "X71n1404_003:0019c13_0": "文武火煨殺人。",
    "X71n1404_003:0019c13_1": "千衲子恨難伸。",
    "X71n1404_003:0019c13_2": "五處主法。",
    "X71n1404_003:0019c13_3": "雙徑兩新。",
    "X71n1404_003:0019c14_0": "內庭敷演。",
    "X71n1404_003:0019c14_1": "賜號超倫。",
    "X71n1404_003:0019c14_2": "自剏正續梵菀。",
    "X71n1404_003:0019c14_3": "延納雲水高賓。",
    "X71n1404_003:0019c15_0": "將謂多少奇特。",
    "X71n1404_003:0019c15_1": "依前滿面埃塵(咦)。",
    "X71n1404_003:0019c16_0": "義簡禪人畫圓相請贊",
    "X71n1404_003:0019c17_0": "圓同太虗。",
    "X71n1404_003:0019c17_1": "無欠無餘。",
    "X71n1404_003:0019c17_2": "良由取捨。",
    "X71n1404_003:0019c17_3": "所以不如。",
    "X71n1404_003:0019c17_4": "恁麼說話。",
    "X71n1404_003:0019c18_0": "早是起模畫樣了。",
    "X71n1404_003:0019c18_1": "殊不知纔擬任麼。",
    "X71n1404_003:0019c18_2": "便不任麼。",
    "X71n1404_003:0019c18_3": "更問如何若何。",
    "X71n1404_003:0019c19_4": "笑倒嵩山破竈墮。",
    "X71n1404_003:0019c20_0": "最明寺殿真像",
    "X71n1404_003:0019c21_0": "掌持國土。",
    "X71n1404_003:0019c21_1": "天下安堵。",
    "X71n1404_003:0019c21_2": "信向佛法。",
    "X71n1404_003:0019c21_3": "運心堅固。",
    "X71n1404_003:0019c21_4": "德重丘山。",
    "X71n1404_003:0019c22_0": "名播寰宇。",
    "X71n1404_003:0019c22_1": "清白傳家。",
    "X71n1404_003:0019c22_2": "望隆今古。",
    "X71n1404_003:0019c22_3": "參透吾宗。",
    "X71n1404_003:0019c22_4": "眼眉卓竪。",
    "X71n1404_003:0019c23_0": "末後一機。",
    "X71n1404_003:0019c23_1": "超佛越祖。",
    "X71n1404_003:0019c23_2": "(咦)汝辜負吾。",
    "X71n1404_003:0019c23_3": "吾辜負汝。",
    "X71n1404_003:0019c24_0": "自讚",
    "X71n1404_003:0020a01_0": "正傳寺住持安東巖請贊",
    "X71n1404_003:0020a02_0": "生緣於西蜀。",
    "X71n1404_003:0020a02_1": "非獨遊日本。",
    "X71n1404_003:0020a02_2": "十方國土中。",
    "X71n1404_003:0020a02_3": "當頭俱坐斷。",
    "X71n1404_003:0020a03_0": "宏海侍者請贊",
    "X71n1404_003:0020a04_0": "這川藞苴。",
    "X71n1404_003:0020a04_1": "全不仁者。",
    "X71n1404_003:0020a04_2": "握起老拳。",
    "X71n1404_003:0020a04_3": "佛祖也怕。",
    "X71n1404_003:0020a05_0": "小師景用請贊",
    "X71n1404_003:0020a06_0": "要贊而無德可贊。",
    "X71n1404_003:0020a06_1": "要罵而無過可罵。",
    "X71n1404_003:0020a06_2": "贊與罵不及處。",
    "X71n1404_003:0020a07_0": "大地而不能載。",
    "X71n1404_003:0020a08_0": "正因法孫命工繪吾幻質炷禮請讚",
    "X71n1404_003:0020a09_0": "箇樣面觜。",
    "X71n1404_003:0020a09_1": "阿誰敢擬。",
    "X71n1404_003:0020a09_2": "威凜凜生。",
    "X71n1404_003:0020a09_3": "氣憤憤地。",
    "X71n1404_003:0020a09_4": "臨濟德山。",
    "X71n1404_003:0020a10_0": "望風敬畏。",
    "X71n1404_003:0020a10_1": "([囗@力])和蘇嚕之。",
    "X71n1404_003:0020a11_0": "偈頌",
    "X71n1404_003:0020a12_0": "無錫劉相幹(佑)。",
    "X71n1404_003:0020a12_1": "篤信佛法。",
    "X71n1404_003:0020a12_2": "常來參請。",
    "X71n1404_003:0020a12_3": "自和雪竇罌粟頌。",
    "X71n1404_003:0020a13_4": "來呈老僧。",
    "X71n1404_003:0020a13_5": "即次韻酬之云。",
    "X71n1404_003:0020a14_0": "一實包含萬點春。",
    "X71n1404_003:0020a14_1": "收來粒粒是家珍。",
    "X71n1404_003:0020a14_2": "些兒圓轉誰能委。",
    "X71n1404_003:0020a15_3": "唯一身分百億身。",
    "X71n1404_003:0020a16_0": "公讀了忽然契悟。",
    "X71n1404_003:0020a16_1": "眾皆賀喜。",
    "X71n1404_003:0020a16_2": "乃知信向佛法。",
    "X71n1404_003:0020a17_0": "靈驗如之。",
    "X71n1404_003:0020a18_0": "鐵壁",
    "X71n1404_003:0020a19_0": "剛然隔斷太虗空。",
    "X71n1404_003:0020a19_1": "縫罅渾無拶不通。",
    "X71n1404_003:0020a19_2": "頑鈍碓夫覷不破。",
    "X71n1404_003:0020a20_3": "倩人書處轉乖宗。",
    "X71n1404_003:0020a21_0": "鐵牛",
    "X71n1404_003:0020a22_0": "骨格純剛蹄角全。",
    "X71n1404_003:0020a22_1": "軒然鼻孔自遼天。",
    "X71n1404_003:0020a22_2": "不貪陝府欄邊草。",
    "X71n1404_003:0020a23_3": "肯遍畊翻祖父田。",
    "X71n1404_003:0020a24_0": "海月",
    "X71n1404_003:0020b01_0": "金波涌出爛銀盆。",
    "X71n1404_003:0020b01_1": "黑白虧盈湛不痕。",
    "X71n1404_003:0020b01_2": "莫謂清波無透路。",
    "X71n1404_003:0020b02_3": "珊瑚枝上影團團。",
    "X71n1404_003:0020b03_0": "竹溪",
    "X71n1404_003:0020b04_0": "空服高心耐歲寒。",
    "X71n1404_003:0020b04_1": "滔滔聲價沒遮攔。",
    "X71n1404_003:0020b04_2": "自從南北分枝派。",
    "X71n1404_003:0020b05_3": "攪動江西十八灘。",
    "X71n1404_003:0020b06_0": "雪竇前堂音座寮有煉指行人求頌",
    "X71n1404_003:0020b07_0": "未徹根源肯便休。",
    "X71n1404_003:0020b07_1": "煉磨三種愈精修。",
    "X71n1404_003:0020b07_2": "發輝自己光明藏。",
    "X71n1404_003:0020b08_3": "抹過俱胝一指頭。",
    "X71n1404_003:0020b09_0": "寫華嚴經求頌",
    "X71n1404_003:0020b10_0": "破一微塵出此經。",
    "X71n1404_003:0020b10_1": "因該果海果該因。",
    "X71n1404_003:0020b10_2": "無端却被管城子。",
    "X71n1404_003:0020b11_3": "名句文俱錯指陳。",
    "X71n1404_003:0020b12_0": "畫髑髏檐人我檐者求頌",
    "X71n1404_003:0020b13_0": "自從塵劫至于今。",
    "X71n1404_003:0020b13_1": "執著無明人我心。",
    "X71n1404_003:0020b13_2": "驀忽眼睛俱突出。",
    "X71n1404_003:0020b14_3": "乾坤大地孰知音。",
    "X71n1404_003:0020b15_0": "栽松道者",
    "X71n1404_003:0020b16_0": "栽培得地。",
    "X71n1404_003:0020b16_1": "節操蒼然。",
    "X71n1404_003:0020b16_2": "死而復活。",
    "X71n1404_003:0020b16_3": "身後身前。",
    "X71n1404_003:0020b16_4": "楖[木*栗]橫肩阿剌剌。",
    "X71n1404_003:0020b17_5": "再來不直半分錢。",
    "X71n1404_003:0020b18_0": "亮知客(出世住戒香)",
    "X71n1404_003:0020b19_0": "主中賓句驗來端。",
    "X71n1404_003:0020b19_1": "四海禪流總被瞞。",
    "X71n1404_003:0020b19_2": "鐵磨機輪難比擬。",
    "X71n1404_003:0020b20_3": "逢人即出舌翻瀾。",
    "X71n1404_003:0020b21_0": "南洲",
    "X71n1404_003:0020b22_0": "贍部那邊沙際間。",
    "X71n1404_003:0020b22_1": "閧然魔子恣縱橫。",
    "X71n1404_003:0020b22_2": "周金剛帶不平氣。",
    "X71n1404_003:0020b23_3": "勘破却從潭上行。",
    "X71n1404_003:0020b24_0": "小佛事",
    "X71n1404_003:0020c01_0": "尤木石相公薨背上香",
    "X71n1404_003:0020c02_0": "此一炷香。",
    "X71n1404_003:0020c02_1": "根蒂穩實。",
    "X71n1404_003:0020c02_2": "枝葉繁榮。",
    "X71n1404_003:0020c02_3": "透骨馨香。",
    "X71n1404_003:0020c02_4": "遼天價重。",
    "X71n1404_003:0020c03_0": "爇向寶爐。",
    "X71n1404_003:0020c03_1": "以伸供養。",
    "X71n1404_003:0020c03_2": "共惟。",
    "X71n1404_003:0020c03_3": "宋故侍讀提史端明相公。",
    "X71n1404_003:0020c04_0": "清白傳家。",
    "X71n1404_003:0020c04_1": "儒釋通貫。",
    "X71n1404_003:0020c04_2": "詞源浩汗而涌三峽水。",
    "X71n1404_003:0020c04_3": "講讀琮琤而對九重天。",
    "X71n1404_003:0020c05_4": "修史決古今是非。",
    "X71n1404_003:0020c05_5": "操麻定人我邪正。",
    "X71n1404_003:0020c06_0": "為紀為綱兮霜風凜凜。",
    "X71n1404_003:0020c06_1": "利人利物兮春日融融。",
    "X71n1404_003:0020c06_2": "因觀妙喜語句。",
    "X71n1404_003:0020c07_3": "脫然契證如如。",
    "X71n1404_003:0020c07_4": "披閱內典真乘。",
    "X71n1404_003:0020c07_5": "驀忽點頭唯唯。",
    "X71n1404_003:0020c08_6": "總道坡仙之再世。",
    "X71n1404_003:0020c08_7": "宛然普覺之後身。",
    "X71n1404_003:0020c08_8": "來兮似月行空。",
    "X71n1404_003:0020c09_9": "去兮如雲散壑。",
    "X71n1404_003:0020c09_10": "南禪每叨藥誨。",
    "X71n1404_003:0020c09_11": "懷抱奚忘。",
    "X71n1404_003:0020c09_12": "荐伸奠禮之芹。",
    "X71n1404_003:0020c10_13": "領徒熏誦。",
    "X71n1404_003:0020c10_14": "神靈歆格。",
    "X71n1404_003:0020c10_15": "不昧本來。",
    "X71n1404_003:0020c10_16": "(插香云)願此香雲遍剎塵。",
    "X71n1404_003:0020c11_17": "饒益一切成正覺。",
    "X71n1404_003:0020c12_0": "奠茶",
    "X71n1404_003:0020c13_0": "錫麓之英。",
    "X71n1404_003:0020c13_1": "上苑之春。",
    "X71n1404_003:0020c13_2": "山川秀發。",
    "X71n1404_003:0020c13_3": "雨露重新。",
    "X71n1404_003:0020c13_4": "石銚烹來味別。",
    "X71n1404_003:0020c14_5": "快哉壯爽精神。",
    "X71n1404_003:0020c14_6": "睡魔退舍。",
    "X71n1404_003:0020c14_7": "兩腋風清。",
    "X71n1404_003:0020c14_8": "翻笑趙州錯喚人。",
    "X71n1404_003:0020c16_0": "奠湯",
    "X71n1404_003:0020c17_0": "地道收來。",
    "X71n1404_003:0020c17_1": "精麤揀擇。",
    "X71n1404_003:0020c17_2": "牛溲馬勃。",
    "X71n1404_003:0020c17_3": "藍毒砒霜。",
    "X71n1404_003:0020c17_4": "盡情細末將來。",
    "X71n1404_003:0020c18_5": "變作醍醐上味。",
    "X71n1404_003:0020c18_6": "當陽點出。",
    "X71n1404_003:0020c18_7": "滿座馨香。",
    "X71n1404_003:0020c18_8": "不比其他薑杏湯。",
    "X71n1404_003:0020c20_0": "潮西堂鎻龕",
    "X71n1404_003:0020c21_0": "靈峰全提正令。",
    "X71n1404_003:0020c21_1": "太白平分風月。",
    "X71n1404_003:0020c21_2": "碎佛祖玄關。",
    "X71n1404_003:0020c21_3": "掃衲僧窠窟。",
    "X71n1404_003:0020c22_4": "活中全死。",
    "X71n1404_003:0020c22_5": "死中全活。",
    "X71n1404_003:0020c22_6": "舉鎻子云。",
    "X71n1404_003:0020c22_7": "何似白雲鎻口訣。",
    "X71n1404_003:0020c24_0": "覺禪客起龕",
    "X71n1404_003:0021a01_0": "奮不顧身。",
    "X71n1404_003:0021a01_1": "丁字著脚。",
    "X71n1404_003:0021a01_2": "拶透玄關。",
    "X71n1404_003:0021a01_3": "死生夢覺。",
    "X71n1404_003:0021a01_4": "便任麼去時如何。",
    "X71n1404_003:0021a02_5": "切忌語脉裏轉却。",
    "X71n1404_003:0021a03_0": "明侍者起龕",
    "X71n1404_003:0021a04_0": "明明知有道不得。",
    "X71n1404_003:0021a04_1": "明明道得不知有。",
    "X71n1404_003:0021a04_2": "一回喪盡目前機。",
    "X71n1404_003:0021a05_3": "八角磨盤空裏走。",
    "X71n1404_003:0021a06_0": "嵩知客下火(福州人)",
    "X71n1404_003:0021a07_0": "飛猿嶺太白嶺。",
    "X71n1404_003:0021a07_1": "須信平夷中險峻。",
    "X71n1404_003:0021a07_2": "不憚區區親到來。",
    "X71n1404_003:0021a08_0": "等閑踏斷無蹊徑。",
    "X71n1404_003:0021a08_1": "泯去來忘途轍。",
    "X71n1404_003:0021a08_2": "六月火燒空。",
    "X71n1404_003:0021a08_3": "烏龜頭帶雪。",
    "X71n1404_003:0021a10_0": "蒙庵主下火(浙翁小師在天童死)",
    "X71n1404_003:0021a11_0": "佛心宗賑愚蒙。",
    "X71n1404_003:0021a11_1": "出生死絕羅籠。",
    "X71n1404_003:0021a11_2": "泥牛入海覔無蹤。",
    "X71n1404_003:0021a11_3": "以火把打圓相云。",
    "X71n1404_003:0021a12_4": "扶桑依舊一輪紅。",
    "X71n1404_003:0021a13_0": "普淳二上座起骨",
    "X71n1404_003:0021a14_0": "普通年後。",
    "X71n1404_003:0021a14_1": "淳祐年初。",
    "X71n1404_003:0021a14_2": "有則公案。",
    "X71n1404_003:0021a14_3": "非實非虗。",
    "X71n1404_003:0021a14_4": "擬之則心膽喪。",
    "X71n1404_003:0021a15_5": "覷著則眼睛枯。",
    "X71n1404_003:0021a15_6": "中問有優有劣。",
    "X71n1404_003:0021a15_7": "如何判得恰好。",
    "X71n1404_003:0021a16_0": "撫骨一下云。",
    "X71n1404_003:0021a16_1": "一狀領過。",
    "X71n1404_003:0021a17_0": "安危峰藏主起骨(中秋後)",
    "X71n1404_003:0021a18_0": "舌底卷風雷。",
    "X71n1404_003:0021a18_1": "胷中蟠錦綉。",
    "X71n1404_003:0021a18_2": "機輪轉碌碌。",
    "X71n1404_003:0021a18_3": "古今都穿透。",
    "X71n1404_003:0021a19_0": "不墮常流。",
    "X71n1404_003:0021a19_1": "骨格渾別。",
    "X71n1404_003:0021a19_2": "獨騎瘦馬踏殘月。",
    "X71n1404_003:0021a20_0": "藏上座入骨",
    "X71n1404_003:0021a21_0": "與汝往來者是藏。",
    "X71n1404_003:0021a21_1": "死語誑人成自誑。",
    "X71n1404_003:0021a21_2": "不往來者亦是藏。",
    "X71n1404_003:0021a22_3": "火乱灰飛收不上。",
    "X71n1404_003:0021a22_4": "收得上。",
    "X71n1404_003:0021a22_5": "與誰論。",
    "X71n1404_003:0021a22_6": "夜聽巖溜響。",
    "X71n1404_003:0021a22_7": "朝看嶺雲屯。",
    "X71n1404_003:0021a24_0": "清圻二上座入塔",
    "X71n1404_003:0021b01_0": "二由一有。",
    "X71n1404_003:0021b01_1": "一亦莫守。",
    "X71n1404_003:0021b01_2": "抹過空劫前。",
    "X71n1404_003:0021b01_3": "超出涅槃後。",
    "X71n1404_003:0021b01_4": "攪不濁。",
    "X71n1404_003:0021b02_5": "澄不清。",
    "X71n1404_003:0021b02_6": "沒圻岸。",
    "X71n1404_003:0021b02_7": "等空平。",
    "X71n1404_003:0021b02_8": "酌然雙暗復雙明。",
    "X71n1404_003:0021b02_9": "休認山河作眼睛。",
    "X71n1404_003:0021b04_0": "端知客秉炬",
    "X71n1404_003:0021b05_0": "驗衲僧句。",
    "X71n1404_003:0021b05_1": "如何舉似。",
    "X71n1404_003:0021b05_2": "要知端的。",
    "X71n1404_003:0021b05_3": "言外領取。",
    "X71n1404_003:0021b05_4": "驀然當下死偷心。",
    "X71n1404_003:0021b06_5": "鐵鑽通紅被虫蛀。",
    "X71n1404_003:0021b07_0": "兀菴和尚語錄卷下(終)",
    "X71n1404_003:0021b10_0": "小師景用命工鋟板",
    "X71n1404_003:0021b12_0": "越州兵衛主將官。",
    "X71n1404_003:0021b12_1": "二月初一日夜。",
    "X71n1404_003:0021b12_2": "忽夢見一大寺。",
    "X71n1404_003:0021b12_3": "殿堂深廣。",
    "X71n1404_003:0021b13_4": "樓閣重重。",
    "X71n1404_003:0021b13_5": "莊嚴真奇特。",
    "X71n1404_003:0021b13_6": "裏面去不得。",
    "X71n1404_003:0021b13_7": "外有一人立。",
    "X71n1404_003:0021b14_8": "兵衛主將問曰。",
    "X71n1404_003:0021b14_9": "這裏名什麼所。",
    "X71n1404_003:0021b14_10": "人答曰。",
    "X71n1404_003:0021b14_11": "此間名巨福山建長禪寺善法堂。",
    "X71n1404_003:0021b15_12": "彼岸之時。",
    "X71n1404_003:0021b15_13": "十方諸佛。",
    "X71n1404_003:0021b15_14": "來這裏說法度人。",
    "X71n1404_003:0021b16_15": "中間第一尊。",
    "X71n1404_003:0021b16_16": "便是巨福山長老。",
    "X71n1404_003:0021b16_17": "如今便是彼岸也。",
    "X71n1404_003:0021b17_18": "裏面無人去得。",
    "X71n1404_003:0021b17_19": "你且待長老出來看。",
    "X71n1404_003:0021b17_20": "少時便得見長老出來。",
    "X71n1404_003:0021b18_21": "年及六十餘歲。",
    "X71n1404_003:0021b18_22": "身相圓滿。",
    "X71n1404_003:0021b18_23": "不短不長。",
    "X71n1404_003:0021b19_24": "兵衛見了。",
    "X71n1404_003:0021b19_25": "心中如法歡喜。",
    "X71n1404_003:0021b19_26": "夢覺後。",
    "X71n1404_003:0021b19_27": "語屋裏人曰。",
    "X71n1404_003:0021b19_28": "我夢見如此事。",
    "X71n1404_003:0021b20_29": "你等曾見巨福山長老麼。",
    "X71n1404_003:0021b20_30": "屋裏人答曰。",
    "X71n1404_003:0021b21_0": "未曾見。",
    "X71n1404_003:0021b21_1": "兵衛云。",
    "X71n1404_003:0021b21_2": "我自去巨福山。",
    "X71n1404_003:0021b21_3": "參見長老。",
    "X71n1404_003:0021b21_4": "即自來建長寺侍者寮。",
    "X71n1404_003:0021b22_5": "說如上夢事了。",
    "X71n1404_003:0021b22_6": "便得見兀庵和尚在佛殿。",
    "X71n1404_003:0021b23_7": "領眾行道諷經。",
    "X71n1404_003:0021b23_8": "果如夢見一同。",
    "X71n1404_003:0021b23_9": "始信夢事真實。",
    "X71n1404_003:0021b24_10": "見者聞者。",
    "X71n1404_003:0021b24_11": "手舞足蹈。",
    "X71n1404_003:0021c01_0": "時景用在侍傍。",
    "X71n1404_003:0021c01_1": "同眾親見是事。",
    "X71n1404_003:0021c01_2": "即略記之。",
    "X71n1404_003:0021c05_0": "寧侍者自育王至雙徑。",
    "X71n1404_003:0021c05_1": "首尾相從。",
    "X71n1404_003:0021c05_2": "已經數載。",
    "X71n1404_003:0021c05_3": "見其孜孜為道。",
    "X71n1404_003:0021c06_4": "真本色衲子。",
    "X71n1404_003:0021c06_5": "秋風吹衣。",
    "X71n1404_003:0021c06_6": "忽來告別。",
    "X71n1404_003:0021c06_7": "且袖紙求語。",
    "X71n1404_003:0021c07_8": "而謁蔣山。",
    "X71n1404_003:0021c07_9": "吾不欲特地固却之。",
    "X71n1404_003:0021c07_10": "而所請益堅。",
    "X71n1404_003:0021c07_11": "因謂之曰。",
    "X71n1404_003:0021c08_12": "昔太師祖據鍾阜。",
    "X71n1404_003:0021c08_13": "大慧居五峰。",
    "X71n1404_003:0021c08_14": "一時龍象。",
    "X71n1404_003:0021c08_15": "往來二開士之門。",
    "X71n1404_003:0021c09_16": "憧憧致武於道。",
    "X71n1404_003:0021c09_17": "又不知悞了多少人家男女。",
    "X71n1404_003:0021c10_18": "吾故不敢仰視前輩。",
    "X71n1404_003:0021c10_19": "而痴絕兄實當世宗匠。",
    "X71n1404_003:0021c10_20": "此行若空去。",
    "X71n1404_003:0021c11_21": "後必實回。",
    "X71n1404_003:0021c11_22": "若使實去。",
    "X71n1404_003:0021c11_23": "必須空回斷無疑矣。",
    "X71n1404_003:0021c12_0": "或恐問著。",
    "X71n1404_003:0021c12_1": "此問如何若何。",
    "X71n1404_003:0021c12_2": "却不得妄通消息。",
    "X71n1404_003:0021c12_3": "何故。",
    "X71n1404_003:0021c12_4": "彼此老大。",
    "X71n1404_003:0021c13_5": "端平乙未中秋。",
    "X71n1404_003:0021c13_6": "徑山無準叟書于凌霄閣。",
    "X71n1404_003:0021c17_0": "無準老送寧侍者。",
    "X71n1404_003:0021c17_1": "謁予。",
    "X71n1404_003:0021c17_2": "且有不得妄通消息之訓。",
    "X71n1404_003:0021c17_3": "教兒迷子之訣。",
    "X71n1404_003:0021c18_4": "自當如是。",
    "X71n1404_003:0021c18_5": "殊不知子未下五峰頂。",
    "X71n1404_003:0021c18_6": "此消息已塞破四天下。",
    "X71n1404_003:0021c19_7": "無你左遮右掩處。",
    "X71n1404_003:0021c19_8": "況無準老有三千里外。",
    "X71n1404_003:0021c20_9": "定殽訛底眼目。",
    "X71n1404_003:0021c20_10": "早已知予。",
    "X71n1404_003:0021c20_11": "悞了人家男女。",
    "X71n1404_003:0021c21_12": "子歸當自知之矣。",
    "X71n1404_003:0021c21_13": "端平丙申大寒。",
    "X71n1404_003:0021c21_14": "金陵北山道冲。",
    "X71n1404_003:0021c22_15": "書于正傳。",
    "X71n1404_003:0022a04_0": "歐峰有亭曰見山。",
    "X71n1404_003:0022a04_1": "乃昔人啟關悟心之所。",
    "X71n1404_003:0022a04_2": "戊辰嘉定。",
    "X71n1404_003:0022a05_0": "余適會吾燦祖演心銘於其上。",
    "X71n1404_003:0022a05_1": "至兀爾忘緣。",
    "X71n1404_003:0022a05_2": "歸復自然處。",
    "X71n1404_003:0022a06_3": "余不覺掩耳而退。",
    "X71n1404_003:0022a06_4": "三十年來每每兀坐。",
    "X71n1404_003:0022a06_5": "即知其然。",
    "X71n1404_003:0022a07_6": "亦知其所以然。",
    "X71n1404_003:0022a07_7": "終未能見其所以然而然也。",
    "X71n1404_003:0022a07_8": "及觀徑山無準大長老。",
    "X71n1404_003:0022a08_9": "書兀庵二字。",
    "X71n1404_003:0022a08_10": "付寧侍者。",
    "X71n1404_003:0022a08_11": "因問命名之意。",
    "X71n1404_003:0022a09_12": "曰無他焉。",
    "X71n1404_003:0022a09_13": "唯癡兀自守也。",
    "X71n1404_003:0022a09_14": "若果如此。",
    "X71n1404_003:0022a09_15": "曷若從徑山所書兀為菴。",
    "X71n1404_003:0022a10_16": "兀兀然而從燦祖遊為愈也。",
    "X71n1404_003:0022a10_17": "心月書。",
    "X71n1404_003:0022a14_0": "這暗號子。",
    "X71n1404_003:0022a14_1": "不是當場主將。",
    "X71n1404_003:0022a14_2": "他人一字不會。",
    "X71n1404_003:0022a14_3": "而今大唐國裡。",
    "X71n1404_003:0022a15_4": "棊布星羅。",
    "X71n1404_003:0022a15_5": "如吾。",
    "X71n1404_003:0022a16_0": "兀菴。",
    "X71n1404_003:0022a16_1": "叢林傑出。",
    "X71n1404_003:0022a16_2": "正續真傳。",
    "X71n1404_003:0022a16_3": "言句流布。",
    "X71n1404_003:0022a16_4": "活人眼目。",
    "X71n1404_003:0022a16_5": "余獲覧觀。",
    "X71n1404_003:0022a17_6": "痛快平生。",
    "X71n1404_003:0022a17_7": "故書其後云。",
    "X71n1404_003:0022a18_0": "寶祐六年季夏望日　晉陵尤煜"
}