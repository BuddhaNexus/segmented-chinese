[
    {
        "source_sentence": "金剛童子持念經",
        "from": "T21n1224_001:0133b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨三業真言",
        "from": "T21n1224_001:0133b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵󰡊弟引䅶戍引馱曩引野娑嚩二合引賀引",
        "from": "T21n1224_001:0133b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽蓮花合掌。",
        "from": "T21n1224_001:0133b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦前真言七遍。",
        "from": "T21n1224_001:0133b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持身心三業。",
        "from": "T21n1224_001:0133b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄念諸過悉皆清淨。",
        "from": "T21n1224_001:0133b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結普禮一切如來印。",
        "from": "T21n1224_001:0133b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地。",
        "from": "T21n1224_001:0133b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽左覆右。",
        "from": "T21n1224_001:0133b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰背相著。",
        "from": "T21n1224_001:0133b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二信二惠反相叉安於頂上。",
        "from": "T21n1224_001:0133b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口誦彼真言。",
        "from": "T21n1224_001:0133b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身住此儀相。",
        "from": "T21n1224_001:0133b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想自身滿於法界。",
        "from": "T21n1224_001:0133b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二佛菩薩前有己身。",
        "from": "T21n1224_001:0133b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至誠作禮真言。",
        "from": "T21n1224_001:0133b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合尾微次反短聲多半音如是以三業齊運。",
        "from": "T21n1224_001:0133b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮觀一切聖眾及曼茶羅本尊像已。",
        "from": "T21n1224_001:0133b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結加趺坐或半加坐。",
        "from": "T21n1224_001:0133b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄定身心。",
        "from": "T21n1224_001:0133b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結佛部三昧耶印。",
        "from": "T21n1224_001:0133b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽芙蓉合掌。",
        "from": "T21n1224_001:0133b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開手如掬物勢。",
        "from": "T21n1224_001:0133b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二定輔於二念上節文側。",
        "from": "T21n1224_001:0133b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二惠捻二定下第一文即成。",
        "from": "T21n1224_001:0133b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即念佛部三昧耶真言。",
        "from": "T21n1224_001:0133b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵怛他去引𧃯姤引𠺶婆二合嚩引野娑嚩二合賀引以印安於頂上。",
        "from": "T21n1224_001:0133b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1224_001:0133b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想印如佛形像。",
        "from": "T21n1224_001:0133b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮花部三昧耶印。",
        "from": "T21n1224_001:0133b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽如前合掌微開。",
        "from": "T21n1224_001:0133b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中間二進二念二定六指微曲。",
        "from": "T21n1224_001:0133b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭相去各一寸許。",
        "from": "T21n1224_001:0133b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二信二惠各并竪。",
        "from": "T21n1224_001:0133b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如開敷蓮花形。",
        "from": "T21n1224_001:0133b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1224_001:0133b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉印安於頂右右耳之上。",
        "from": "T21n1224_001:0133b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想如觀自在菩薩。",
        "from": "T21n1224_001:0133b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮花三昧耶真言曰。",
        "from": "T21n1224_001:0133b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵鉢納謨二合引納婆二合嚩引野娑嚩二合賀引次結金剛部三昧耶印。",
        "from": "T21n1224_001:0133b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前遍禮印安於心上。",
        "from": "T21n1224_001:0133c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1224_001:0133c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉印安於頂左左耳之上。",
        "from": "T21n1224_001:0133c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想如金剛藏菩薩。",
        "from": "T21n1224_001:0133c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛部三昧耶真言曰。",
        "from": "T21n1224_001:0133c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩曰嚧二合引納婆二合嚩引野娑嚩二合引賀引以結護身印。",
        "from": "T21n1224_001:0133c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽右押左。",
        "from": "T21n1224_001:0133c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內相叉直竪。",
        "from": "T21n1224_001:0133c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二念頭相柱。",
        "from": "T21n1224_001:0133c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二定微曲。",
        "from": "T21n1224_001:0133c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於二念背不令相著。",
        "from": "T21n1224_001:0133c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如三股杵形。",
        "from": "T21n1224_001:0133c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二惠并竪。",
        "from": "T21n1224_001:0133c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌中押二進二信上即成。",
        "from": "T21n1224_001:0133c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本經中或用根本印亦得。",
        "from": "T21n1224_001:0133c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今取蘇悉地經中通法真言即不󱁻。",
        "from": "T21n1224_001:0133c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護身真言。",
        "from": "T21n1224_001:0133c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩訥瑟吒二合嚩餉羯囉迦抳矩嚕二合引馱囉乞灑二合囉乞灑二合𤚥引娑嚩二合引賀引由結此印。",
        "from": "T21n1224_001:0133c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦前真言。",
        "from": "T21n1224_001:0133c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持自身五處。",
        "from": "T21n1224_001:0133c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先印額次右肩左肩心喉。",
        "from": "T21n1224_001:0133c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為五處。",
        "from": "T21n1224_001:0133c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以真言威力加持自身。",
        "from": "T21n1224_001:0133c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成被金剛甲冑。",
        "from": "T21n1224_001:0133c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結辟除諸障繫縛毘那夜迦印。",
        "from": "T21n1224_001:0133c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽十度內相叉以屈二惠入掌。",
        "from": "T21n1224_001:0133c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲相背各捻二念指面。",
        "from": "T21n1224_001:0133c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急握拳。",
        "from": "T21n1224_001:0133c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想毘那夜迦。",
        "from": "T21n1224_001:0133c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作障難者皆被五繫縛之。",
        "from": "T21n1224_001:0133c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除真言曰。",
        "from": "T21n1224_001:0133c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵度曩尾度曩怛羅二合娑野戍引灑野薩嚩尾曩引野迦引南引吽引撥普未反下同此吒半娑嚩二合引賀引次結被金剛甲冑印。",
        "from": "T21n1224_001:0133c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前印以二定直竪頭相柱。",
        "from": "T21n1224_001:0133c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二惠各捻二定下第一文即成。",
        "from": "T21n1224_001:0133c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印如前加持自身五處。",
        "from": "T21n1224_001:0133c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍身自然被金剛鎧甲光明赫奕。",
        "from": "T21n1224_001:0133c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0133c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵紇哩二合迦抳野麼娜賀吽引撥吒半音娑嚩二合賀次結金剛牆印。",
        "from": "T21n1224_001:0133c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前甲冑印。",
        "from": "T21n1224_001:0133c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開二定頭。",
        "from": "T21n1224_001:0133c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相去一寸許。",
        "from": "T21n1224_001:0133c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開掌如牆形即成。",
        "from": "T21n1224_001:0133c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0133c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵紇哩二合迦抳諾賀諾賀鉢左鉢左吽撥吒半音娑嚩二合引賀以印頂上。",
        "from": "T21n1224_001:0134a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空中右旋三匝。",
        "from": "T21n1224_001:0134a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼誦真言三遍。",
        "from": "T21n1224_001:0134a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此加持威神力故。",
        "from": "T21n1224_001:0134a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周匝四方。",
        "from": "T21n1224_001:0134a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心遠近結成金剛牆。",
        "from": "T21n1224_001:0134a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "界界光明照曜。",
        "from": "T21n1224_001:0134a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸魔不敢輔近。",
        "from": "T21n1224_001:0134a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結迎請聖尊印。",
        "from": "T21n1224_001:0134a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽內相叉直竪。",
        "from": "T21n1224_001:0134a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二定頭柱。",
        "from": "T21n1224_001:0134a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二惠向身招之。",
        "from": "T21n1224_001:0134a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請尊真言曰。",
        "from": "T21n1224_001:0134a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵度𩕳婆去誐鑁武點迦𩕳短嚕二合引馱翳𮠴引呬吽引撥吒半音不改此印。",
        "from": "T21n1224_001:0134a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便誦後真言。",
        "from": "T21n1224_001:0134a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎請聖尊者眷屬真言。",
        "from": "T21n1224_001:0134a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵娑跛哩嚩引囉麼鼻音反嚩賀野婆去誐鑁武敢反迦𩕳矩嚕二合馱三去麼耶麼努娑麼二合囉娑嚩二合賀引次結都明王忿怒軍吒利印。",
        "from": "T21n1224_001:0134a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除諸魔恐隨聖眾潛隱在其中。",
        "from": "T21n1224_001:0134a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以明王威神搜棟發遣。",
        "from": "T21n1224_001:0134a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作障難者唯留聖者及自眷屬。",
        "from": "T21n1224_001:0134a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其印以二信右押左內相交。",
        "from": "T21n1224_001:0134a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二進雙屈並押二信交上。",
        "from": "T21n1224_001:0134a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二念直竪頭柱。",
        "from": "T21n1224_001:0134a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二定各微曲。",
        "from": "T21n1224_001:0134a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於二念背後不相著。",
        "from": "T21n1224_001:0134a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如三股金剛杵形。",
        "from": "T21n1224_001:0134a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二惠並竪押二進上即成。",
        "from": "T21n1224_001:0134a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨誦真言。",
        "from": "T21n1224_001:0134a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印空中左旋三匝。",
        "from": "T21n1224_001:0134a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除姦魔棟擇發遣。",
        "from": "T21n1224_001:0134a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便即右旋三匝結成。",
        "from": "T21n1224_001:0134a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛光明堅固大界。",
        "from": "T21n1224_001:0134a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切凡聖不合越此界故。",
        "from": "T21n1224_001:0134a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "違越者化三昧耶決定不安。",
        "from": "T21n1224_001:0134a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾聖陰罰違越。",
        "from": "T21n1224_001:0134a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾聖言誓故也。",
        "from": "T21n1224_001:0134a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦軍吒利真言曰。",
        "from": "T21n1224_001:0134a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引囉怛曩二合怛囉二合夜引野娜莫室戰二合嚩日囉二合播引緊奴雅反曳摩賀藥叉細引曩引鉢多上曳唵阿密㗚二合多軍䋈上里却却佉去引呬佉上同呬聲異反上同底瑟咤二合底瑟姹二合滿馱滿馱賀曩賀曩𧃯惹𧃯惹尾颯普二合引吒野尾颯普二合吒野薩嚩尾近曩二合尾曩引野迦摩賀誐䋈鼻鉢底爾引尾𮧊多󱁅反得迦囉引野吽撥吒半音便結上方金剛網印。",
        "from": "T21n1224_001:0134b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前牆印。",
        "from": "T21n1224_001:0134b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二惠開散直竪即成。",
        "from": "T21n1224_001:0134b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印頂上右旋三匝。",
        "from": "T21n1224_001:0134b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍即成。",
        "from": "T21n1224_001:0134b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛網遍覆其上。",
        "from": "T21n1224_001:0134b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0134b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合半惹囉吽引撥吒半音次獻閼伽香水浴聖尊印。",
        "from": "T21n1224_001:0134b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用前迎請印。",
        "from": "T21n1224_001:0134b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二惠各捻二定根下第一文。",
        "from": "T21n1224_001:0134b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印當心。",
        "from": "T21n1224_001:0134b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平舒如羸盃形。",
        "from": "T21n1224_001:0134b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉印當額奉獻。",
        "from": "T21n1224_001:0134b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有香水器。",
        "from": "T21n1224_001:0134b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以此印按之。",
        "from": "T21n1224_001:0134b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持三遍或一遍。",
        "from": "T21n1224_001:0134b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後捧而獻之。",
        "from": "T21n1224_001:0134b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0134b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩曰嚕二合娜迦吽引次結寶山印。",
        "from": "T21n1224_001:0134b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以獨股杵印。",
        "from": "T21n1224_001:0134b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𮙏上節令平如上頂形。",
        "from": "T21n1224_001:0134b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二惠並竪押掌中諸度上即成。",
        "from": "T21n1224_001:0134b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦寶山真言曰。",
        "from": "T21n1224_001:0134b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿左羅吽引次獻蓮花座印。",
        "from": "T21n1224_001:0134b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以前閼伽印。",
        "from": "T21n1224_001:0134b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二惠頭向外開竪。",
        "from": "T21n1224_001:0134b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相去半寸許。",
        "from": "T21n1224_001:0134b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蓮花形。",
        "from": "T21n1224_001:0134b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0134b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日羅二合尾囉引野娑嚩二合引賀引次獻五供養先結塗香印。",
        "from": "T21n1224_001:0134b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前獨股杵印。",
        "from": "T21n1224_001:0134b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二惠微屈。",
        "from": "T21n1224_001:0134b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捻二定下第一文。",
        "from": "T21n1224_001:0134b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相去一寸許即成。",
        "from": "T21n1224_001:0134b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香真言曰。",
        "from": "T21n1224_001:0134b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦抳矩嚕二合引馱一薩嚩薩怛嚩二合婆去孕迦囉二合囉乞灑二合囉乞灑二合三薩嚩彥𮣺引𩕳娑嚩二合引賀引次結獻花印。",
        "from": "T21n1224_001:0134b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前獨股杵印。",
        "from": "T21n1224_001:0134b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出右惠即成。",
        "from": "T21n1224_001:0134b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦獻花真言曰。",
        "from": "T21n1224_001:0134b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦抳補澁波二合母納婆二合嚩吽引次結燒香印。",
        "from": "T21n1224_001:0134c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前獨股印。",
        "from": "T21n1224_001:0134c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出左惠即成。",
        "from": "T21n1224_001:0134c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦燒香真言曰。",
        "from": "T21n1224_001:0134c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦抳矩嚕二合馱塢𮓌囉二合能上聲瑟吒嚕二合得羯二合吒佩引囉嚩仡哩二合恨拏二合仡哩二合恨拏二合度引奔娑嚩二合引賀次結獻食印。",
        "from": "T21n1224_001:0134c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "準前獨𦙶杵印。",
        "from": "T21n1224_001:0134c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出二惠及二信頭相柱。",
        "from": "T21n1224_001:0134c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘四度內相叉作拳即成。",
        "from": "T21n1224_001:0134c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0134c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦抳吽引吽引娑嚩二合引賀引次結燈明印。",
        "from": "T21n1224_001:0134c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前獨股杵印。",
        "from": "T21n1224_001:0134c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二惠向身並竪即成。",
        "from": "T21n1224_001:0134c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦燈明真言曰。",
        "from": "T21n1224_001:0134c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦抳儞波儞簸野吽引撥吒半音娑嚩二合引賀引次結普供養印。",
        "from": "T21n1224_001:0134c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌。",
        "from": "T21n1224_001:0134c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右押左叉交上一節。",
        "from": "T21n1224_001:0134c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是想從此印流出。",
        "from": "T21n1224_001:0134c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種供養。",
        "from": "T21n1224_001:0134c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲海化成七寶宮殿樓閣。",
        "from": "T21n1224_001:0134c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣服飲食上好天樂充滿法界。",
        "from": "T21n1224_001:0134c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養一切聖眾。",
        "from": "T21n1224_001:0134c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今略舉一二。",
        "from": "T21n1224_001:0134c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若廣說者。",
        "from": "T21n1224_001:0134c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一如花嚴經中所說。",
        "from": "T21n1224_001:0134c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養即誦是供真言三遍或七遍。",
        "from": "T21n1224_001:0134c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0134c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿上謨引伽麼抳鉢納麼二合入嚩二合羅鉢囉二合𮧬多上耶吽引暨如上諸供養已。",
        "from": "T21n1224_001:0134c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手輪擲金剛杵。",
        "from": "T21n1224_001:0134c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦本真言。",
        "from": "T21n1224_001:0134c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於眾聖前。",
        "from": "T21n1224_001:0134c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想如對至尊。",
        "from": "T21n1224_001:0134c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作踏舞之勢。",
        "from": "T21n1224_001:0134c23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倣像金剛薩埵。",
        "from": "T21n1224_001:0134c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來前。",
        "from": "T21n1224_001:0134c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲弄其杵。",
        "from": "T21n1224_001:0134c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因便加持自身五處。",
        "from": "T21n1224_001:0134c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執取金剛鈴。",
        "from": "T21n1224_001:0134c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於額前三度搖振。",
        "from": "T21n1224_001:0134c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表以天樂音聲供養聖眾令其悅喜。",
        "from": "T21n1224_001:0134c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦誦本真言。",
        "from": "T21n1224_001:0134c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心住薩埵妙三昧地此上用鈴杵二真言及印。",
        "from": "T21n1224_001:0134c27_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由來師受密傳不戴於文。",
        "from": "T21n1224_001:0134c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡智有限。",
        "from": "T21n1224_001:0134c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或傳之不盡。",
        "from": "T21n1224_001:0134c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或領受學者不明置有多種。",
        "from": "T21n1224_001:0134c28_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先後著錯不同。",
        "from": "T21n1224_001:0134c28_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今故書之以草前𦿔修行者又慮恐承事供養之中。",
        "from": "T21n1224_001:0134c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有忘誤疎遺犯三昧耶禁。",
        "from": "T21n1224_001:0135a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有多生宿業罪障由未消除。",
        "from": "T21n1224_001:0135a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦金剛部百字真言。",
        "from": "T21n1224_001:0135a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以補前潛滅除諸過。",
        "from": "T21n1224_001:0135a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得身心清淨。",
        "from": "T21n1224_001:0135a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與法相應。",
        "from": "T21n1224_001:0135a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百字真言曰。",
        "from": "T21n1224_001:0135a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合薩多嚩二合一三去摩野麼鼻努鼻播引攞勒可反野二嚩日囉二合薩多嚩二合三怛㕹二合引努鼻引跛底瑟姹二合四揑哩二合濯引銘婆去嚩五素姤引數沙句反引銘婆去嚩六阿努鼻囉訖姤二合引銘娑嚩七素布引數引准前銘婆嚩八薩嚩悉地淫二合銘鉢囉二合曳延結反蹉倉𭇎反九薩嚩羯磨素左銘十郎多室哩二合藥矩嚕十一吽十二引賀賀賀賀斛引十三娑誐鑁武敢反薩嚩怛他𮓌多十四嚩日囉二合麼鼻音引𭤶引悶左十五嚩曰哩二合引婆嚩十六摩賀引三去麼耶薩多嚩二合惡引十七𭇎各反其印二手右押左。",
        "from": "T21n1224_001:0135a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外相叉作拳直竪。",
        "from": "T21n1224_001:0135a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指相合。",
        "from": "T21n1224_001:0135a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名三昧耶印。",
        "from": "T21n1224_001:0135a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印。",
        "from": "T21n1224_001:0135a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加身四處。",
        "from": "T21n1224_001:0135a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心額喉頂。",
        "from": "T21n1224_001:0135a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及誦百字真言。",
        "from": "T21n1224_001:0135a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除無始已來一切重罪。",
        "from": "T21n1224_001:0135a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破四重禁五無間業罪謗方等經。",
        "from": "T21n1224_001:0135a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等罪悉皆消滅。",
        "from": "T21n1224_001:0135a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況誤失小過而不清淨。",
        "from": "T21n1224_001:0135a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結本尊印。",
        "from": "T21n1224_001:0135a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌。",
        "from": "T21n1224_001:0135a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二無名左安前居下。",
        "from": "T21n1224_001:0135a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右安後居上。",
        "from": "T21n1224_001:0135a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "押左名指背交指。",
        "from": "T21n1224_001:0135a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於二中指背後。",
        "from": "T21n1224_001:0135a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二頭指各鉤取二名指頭。",
        "from": "T21n1224_001:0135a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指並竪合。",
        "from": "T21n1224_001:0135a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指亦並竪。",
        "from": "T21n1224_001:0135a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捻二中指中節。",
        "from": "T21n1224_001:0135a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指合竪即成。",
        "from": "T21n1224_001:0135a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦根本真言。",
        "from": "T21n1224_001:0135a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印加身四處。",
        "from": "T21n1224_001:0135a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0135a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引囉怛曩二怛二合野引野曩莫室戰二合拏嚩日囉二合播引拏鼻曳摩賀引藥叉二合細曩鉢多上曳怛儞也二合他去引唵加抳度𩕳吽撥吒半音娑嚩二合賀又結第二根本印。",
        "from": "T21n1224_001:0135a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前最初護身印。",
        "from": "T21n1224_001:0135a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是亦名獨股杵印。",
        "from": "T21n1224_001:0135b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此與多羅菩薩印同。",
        "from": "T21n1224_001:0135b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二根本真言曰。",
        "from": "T21n1224_001:0135b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨囉怛曩二合夜引野娜莫室戰二合拏嚩日囉二合播引拏鼻曳摩賀引藥叉細引曩引鉢多上曳引怛他也二合他唵度曩尾度曩引迦抳矩嚕二合引馱薩嚩演怛囉二合抳吽引次結頭印。",
        "from": "T21n1224_001:0135b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前獨股杵印。",
        "from": "T21n1224_001:0135b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指各鉤二無名指頭。",
        "from": "T21n1224_001:0135b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於掌中捻其上節內即成。",
        "from": "T21n1224_001:0135b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0135b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵吽引吽引麼麼撥吒次結頂印。",
        "from": "T21n1224_001:0135b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前獨股杵印。",
        "from": "T21n1224_001:0135b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指直竪相柱即成。",
        "from": "T21n1224_001:0135b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0135b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵紇哩二合一戰拏迦抳二諾賀鉢左三吽引撥吒娑嚩二合引賀引四次結心印。",
        "from": "T21n1224_001:0135b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前根本印。",
        "from": "T21n1224_001:0135b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於心上。",
        "from": "T21n1224_001:0135b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以心真言加持一遍。",
        "from": "T21n1224_001:0135b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0135b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦𩕳吽撥吒次捧念珠當心。",
        "from": "T21n1224_001:0135b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以隨心真言加持七遍。",
        "from": "T21n1224_001:0135b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1224_001:0135b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦抳度麼鼻吽撥吒半音二手當心。",
        "from": "T21n1224_001:0135b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持珠念誦身端正坐儼然苦思。",
        "from": "T21n1224_001:0135b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心住本尊威德妙觀。",
        "from": "T21n1224_001:0135b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即與畫像如鏡照形。",
        "from": "T21n1224_001:0135b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不一不異。",
        "from": "T21n1224_001:0135b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨無瑕穢。",
        "from": "T21n1224_001:0135b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外想威光。",
        "from": "T21n1224_001:0135b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心住慈悲妙觀。",
        "from": "T21n1224_001:0135b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍念六道諸類四生輪迴不息。",
        "from": "T21n1224_001:0135b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今發猛利勇信之心。",
        "from": "T21n1224_001:0135b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至誠誦念神妙章句。",
        "from": "T21n1224_001:0135b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心住本尊瑜伽觀智。",
        "from": "T21n1224_001:0135b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今我身心既得清淨。",
        "from": "T21n1224_001:0135b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴此功德神力加被遍用法界。",
        "from": "T21n1224_001:0135b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普濟有情。",
        "from": "T21n1224_001:0135b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙此加持。",
        "from": "T21n1224_001:0135b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆如我身外。",
        "from": "T21n1224_001:0135b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依本經。",
        "from": "T21n1224_001:0135b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更有十五餘道。",
        "from": "T21n1224_001:0135b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言及以印契總合誦習。",
        "from": "T21n1224_001:0135b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令便精熟。",
        "from": "T21n1224_001:0135b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "待至事相應時棟取用之。",
        "from": "T21n1224_001:0135c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以備臨事急難。",
        "from": "T21n1224_001:0135c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "補其不足。",
        "from": "T21n1224_001:0135c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非常用具。",
        "from": "T21n1224_001:0135c01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在大經中說。",
        "from": "T21n1224_001:0135c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此不重敘。",
        "from": "T21n1224_001:0135c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨事若要。",
        "from": "T21n1224_001:0135c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自撿取用之。",
        "from": "T21n1224_001:0135c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大忿怒金剛童子念誦供養儀軌曆應三年七月之比借他筆寫之為令法久住也。",
        "from": "T21n1224_001:0135c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一交了　　悉地金剛經嚴五八",
        "from": "T21n1224_001:0135c07_0",
        "context_with_next_sentence": true
    }
]