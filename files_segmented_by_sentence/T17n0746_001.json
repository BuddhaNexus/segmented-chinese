[
    {
        "source_sentence": "餓鬼報應經",
        "from": "T17n0746_001:0560b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯附東晉錄",
        "from": "T17n0746_001:0560b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者大目揵連，從佛在耆闍崛山中，遊行",
        "from": "T17n0746_001:0560b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒水邊，見諸餓鬼甚多，受罪不同。",
        "from": "T17n0746_001:0560b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見尊者目連，皆起敬心，來問因緣。",
        "from": "T17n0746_001:0560b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一鬼問言：",
        "from": "T17n0746_001:0560b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我常苦頭痛，不知何罪所致？",
        "from": "T17n0746_001:0560b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答言：",
        "from": "T17n0746_001:0560b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝本為人時，不能修忍，以杖打眾生頭，今受花報，果在地獄。",
        "from": "T17n0746_001:0560b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我常瘡痛，何罪所致？",
        "from": "T17n0746_001:0560b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，無有慈心，焚燒山野，殘害眾生，今受花報，果在地獄。",
        "from": "T17n0746_001:0560b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我舉身瘡爛，不可堪忍，何罪所致？",
        "from": "T17n0746_001:0560b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，喜燂猪羊，今受花報，果在地獄。",
        "from": "T17n0746_001:0560b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560b22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我食無足，初不得飽，何罪所致？",
        "from": "T17n0746_001:0560b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，雖飯眾生，恒令不足，今受花報，果在地獄。",
        "from": "T17n0746_001:0560b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我常苦頭痛，治之叵差，何罪所致？",
        "from": "T17n0746_001:0560b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，不敬道德，加以罵辱，今受花報，果在地獄」。",
        "from": "T17n0746_001:0560b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一鬼問言：",
        "from": "T17n0746_001:0560b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我生男女，盡皆端正可愛，而皆早死，念無斷絕，何罪所致？",
        "from": "T17n0746_001:0560b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，見兒殺生，助喜噉肉，殺故促命，喜故痛毒，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我有一夫，而畜多婦，我應直宿，而不見納，何罪所致？",
        "from": "T17n0746_001:0560c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，不敬夫主，邪婬無禮，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我常頭痛，而男根瘡爛，何罪所致？",
        "from": "T17n0746_001:0560c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，於塔廟清淨之處行婬，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我得此身，麁澁不淨，何罪所致？",
        "from": "T17n0746_001:0560c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，不尊有德，輕賤善人，而以沙土擲坌沙門，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我食不啻一斛，而常不足，何罪所致？",
        "from": "T17n0746_001:0560c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，本作比丘，為僧求物，而以自食，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此形，脚腫項癭，何罪所致？",
        "from": "T17n0746_001:0560c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，使人及諸畜生負重無道，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，常患熱渴，何罪所致？",
        "from": "T17n0746_001:0560c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，喜好漁獵，以所得魚，投之沙土，令其苦死，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，狂癡無智，何罪所致？",
        "from": "T17n0746_001:0560c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，以酒施人，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我所生子，皆反噉我，何罪所致？",
        "from": "T17n0746_001:0560c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，不修孝養，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我食常吐，何罪所致？",
        "from": "T17n0746_001:0560c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，有人中後索食，汝瞋罵而與，今受花報，果在地獄。",
        "from": "T17n0746_001:0560c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0560c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我今一生資財無乏，而樂著弊衣，何罪所致？",
        "from": "T17n0746_001:0560c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0560c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，雖好布施，施後尋悔，今受花報，果在地獄。",
        "from": "T17n0746_001:0561a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受一形，恒倚巷陌，宿無常處，何罪所致？",
        "from": "T17n0746_001:0561a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，客來投止而不安隱，見他容止而復瞋罵，今受花報，果在地獄。",
        "from": "T17n0746_001:0561a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我得此形，非男非女，何罪所致？",
        "from": "T17n0746_001:0561a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，而無慈心，好犍六畜，今受花報，果在地獄」。",
        "from": "T17n0746_001:0561a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一鬼問言：",
        "from": "T17n0746_001:0561a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我得此身，躄不能行，何罪所致？",
        "from": "T17n0746_001:0561a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時好行無道，拘繫人獸令不得行，今受花報，果在地獄。",
        "from": "T17n0746_001:0561a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我此一身常患熱渴，行見恒河，清涼美好，入中洗浴，冀得涼樂，以除熱苦；",
        "from": "T17n0746_001:0561a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方入其中，舉身爛壞，渴欲飲之，一口入咽，五藏焦爛，肌肉離骨。",
        "from": "T17n0746_001:0561a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪所致？",
        "from": "T17n0746_001:0561a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，好為相師，相人吉凶，少實多虛，或毀或譽，自稱有德，以動人心，以求利養。",
        "from": "T17n0746_001:0561a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於父母、兄弟、宗親諂偽不實，今受花報。",
        "from": "T17n0746_001:0561a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果在地獄，受苦億倍，說不可盡。",
        "from": "T17n0746_001:0561a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受身以來。",
        "from": "T17n0746_001:0561a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常有惡狗，體大牙利、兩目赫赤，晝夜常來而噉我身，命未盡頃肉尋復生，復受此苦，痛不可忍，何罪所致？",
        "from": "T17n0746_001:0561a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作天祠主，於天祠中，取牛羊血以祀於天，自食其肉，語眾人言：",
        "from": "T17n0746_001:0561a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝等祀天，大得吉利！",
        "from": "T17n0746_001:0561a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』作諸惡邪以惑百姓，今受花報，果在地獄。",
        "from": "T17n0746_001:0561a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，常在不淨中，舉身塗漫，有所噉食皆是不淨，恒受此苦，不能得離，臭惱纏身，憂患叵計，何罪所致？",
        "from": "T17n0746_001:0561a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作婆羅門，不信佛法，不樂供養沙門、道人，若來乞求，恒不欲見。",
        "from": "T17n0746_001:0561a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有一道人來從汝乞。",
        "from": "T17n0746_001:0561a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝作是念：",
        "from": "T17n0746_001:0561a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『當作方便，令不復來。",
        "from": "T17n0746_001:0561a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』即取鉢盛屎著下，以飯覆上，將與道人。",
        "from": "T17n0746_001:0561b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人得已，還至本處，持著一面，淨洗手訖，坐而執鉢，手取欲食，鉢中不淨，臭不可近。",
        "from": "T17n0746_001:0561b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣，受此臭惱，今受花報，果在地獄，常吞熱鐵丸，身體爛壞，苦不可言。",
        "from": "T17n0746_001:0561b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，處處舌出，有自然斧，而斬截之，如是無數，何罪所致？",
        "from": "T17n0746_001:0561b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作小道人，為僧所差，取冷淨水，作石蜜漿，分與眾僧。",
        "from": "T17n0746_001:0561b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石蜜堅大，打取少許，盜食一口。",
        "from": "T17n0746_001:0561b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盜僧物故，今受花報，果在地獄，吞注洋銅，苦不可言。",
        "from": "T17n0746_001:0561b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，常苦飢餓，往至廁上，欲取屎食。",
        "from": "T17n0746_001:0561b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廁上有大力鬼，以杖打我，初不得近，何罪所致？",
        "from": "T17n0746_001:0561b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，曾作道人，為佛圖主，悋護僧物，不以好食供養眾僧，常以麁惡與之。",
        "from": "T17n0746_001:0561b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時時欲作好食，客比丘來，便止不作，待去乃設。",
        "from": "T17n0746_001:0561b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡心慳惜，今受花報，果在地獄。",
        "from": "T17n0746_001:0561b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，腹大如甕，餘身分皆小，咽如細針孔，不得下食，何罪所致？",
        "from": "T17n0746_001:0561b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作聚落主，自恃豪強，欺人民，常以無道索人飲食，以苦百姓，今受花報，果在地獄。",
        "from": "T17n0746_001:0561b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，肩上有銅瓶，滿中洋銅，手捉一杓，以酌取之，自灌其頭，舉身焦爛，如是無數，苦痛無量，何罪所致？",
        "from": "T17n0746_001:0561b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，出家修道，知僧飲食，以一酥瓶，藏著餘處，客道人來而不與之，客去出酥行與舊僧。",
        "from": "T17n0746_001:0561b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此酥是招提僧物，一切有分，隱匿僧物，與不平等。",
        "from": "T17n0746_001:0561b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣，得如是苦，今受花報，果在地獄，受苦難計。",
        "from": "T17n0746_001:0561b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，常有人來，持諸刀鋸，割剝我身，又破其腹，出其五藏，肉盡筋斷，痛不可忍。",
        "from": "T17n0746_001:0561c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾之間，肉生平復，尋復來割，何罪所致？",
        "from": "T17n0746_001:0561c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作婆羅門，不信正法，常生邪見，奉事天神，恒以牛羊禱祠，以是罪故，今受花報，果在地獄。",
        "from": "T17n0746_001:0561c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，常有人來，持諸刀鋸，割剝我身，又破其腹，出其五藏，肉盡筋斷，苦切叵忍。",
        "from": "T17n0746_001:0561c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾之間，肉生平復，尋復來割，何罪所致？",
        "from": "T17n0746_001:0561c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，常作魁膾，主知殺人無有慈心，歡喜行之，有如是罪，故得此惡，今受花報，果在地獄。",
        "from": "T17n0746_001:0561c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，兩腋下恒有熱鐵輪轉，大熱逼身兩腋焦爛，何罪所致？",
        "from": "T17n0746_001:0561c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，出家學道，與僧作種種餅，僧未下食，汝時貪心盜取僧餅，藏著腋下屏處食之，以是因緣得如是苦，今受花報，果在地獄，受苦難量。",
        "from": "T17n0746_001:0561c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，常有自然赤鐵丸，從空中下，入口至腹，或從左出右入，或從右出左入，舉身焦爛，痛切無量，何罪所致？",
        "from": "T17n0746_001:0561c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，出家為沙彌，為僧煮菴羅果。",
        "from": "T17n0746_001:0561c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧中行之，至和上前，輒長與七枚。",
        "from": "T17n0746_001:0561c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣，得如是惡，今受花報，果在地獄。",
        "from": "T17n0746_001:0561c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0561c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，意欲行來，發動迴還，猶如旋風，初不得前，愁惱悶苦，不可稱計，何罪所致？",
        "from": "T17n0746_001:0561c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0561c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作卜問師，詭誑他人，令心罔惑，或喜或怖，皆不真實，由此因緣，得如是惡，今受花報，果在地獄。",
        "from": "T17n0746_001:0562a01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0562a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，內常有熱，猶懷湯火，復來燒煮，苦痛萬端，何罪所致？",
        "from": "T17n0746_001:0562a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0562a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作國王第一夫人。",
        "from": "T17n0746_001:0562a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時王貴敬小夫人，汝常生嫉心，作惡方便，求欲殺之。",
        "from": "T17n0746_001:0562a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伺其臥時，煮酥令熱，注著腹上。",
        "from": "T17n0746_001:0562a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人得此苦痛無量，遂便命終。",
        "from": "T17n0746_001:0562a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是因緣，得如是苦，今受花報，果在地獄。",
        "from": "T17n0746_001:0562a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0562a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，性多恐怖，常畏人來，收閉繫縛、枷鎖楚毒，初無歡心，何罪所致？",
        "from": "T17n0746_001:0562a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0562a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，好行邪婬，犯人婦女，常畏發覺，心不自寧，今受花報，果在地獄，或臥鐵床或抱銅柱，如是之苦，不可稱計。",
        "from": "T17n0746_001:0562a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0562a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，自然熱鐵，而有籠網，纏絡我身，燒熱焦爛，痛毒叵言，何罪所致？",
        "from": "T17n0746_001:0562a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0562a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，常持罝網，殺諸魚獸，籠取飛鳥。",
        "from": "T17n0746_001:0562a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣，得如是苦切，今受花報，果在地獄。",
        "from": "T17n0746_001:0562a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0562a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，無有手足，如一叚肉，在於曠野，狐狼虎豹，鵰鷲眾鳥，競來搏撮，爭共食之，苦痛叵言，何罪所致？",
        "from": "T17n0746_001:0562a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0562a19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，作惡方便，若己若他，妊身之時，即便與藥，令胎消化。",
        "from": "T17n0746_001:0562a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是因緣，得如是苦，今受花報，果在地獄。",
        "from": "T17n0746_001:0562a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又三鬼一時來問言：",
        "from": "T17n0746_001:0562a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，常有鐵釘，從空中下，釘我身上，入肌破骨，痛毒徹髓，何罪所致？",
        "from": "T17n0746_001:0562a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0562a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，一人作馬師，一人作牛師，一人作象師。",
        "from": "T17n0746_001:0562a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟貪他財，鍼刺無道，使受痛苦，而不除痛，由是因緣，得如是苦，今受花報，果在地獄。",
        "from": "T17n0746_001:0562a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」一鬼問言：",
        "from": "T17n0746_001:0562a27_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我受此身，無有頭首，眼耳鼻口，盡在胸前，何罪所致？",
        "from": "T17n0746_001:0562a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答言：",
        "from": "T17n0746_001:0562a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝為人時，若見殺人，與之捉頭，歡喜而挽，無有慈心。",
        "from": "T17n0746_001:0562b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是因緣，得如是身，今受花報，果在地獄。",
        "from": "T17n0746_001:0562b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」目連答諸鬼已，皆生敬心，走前懺悔。",
        "from": "T17n0746_001:0562b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目連見其歡喜，更為說法。",
        "from": "T17n0746_001:0562b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸鬼聞已，皆大歡喜。",
        "from": "T17n0746_001:0562b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓鬼報應經",
        "from": "T17n0746_001:0562b05_100",
        "context_with_next_sentence": false
    }
]