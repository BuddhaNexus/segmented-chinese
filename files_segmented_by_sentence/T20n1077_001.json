[
    {
        "source_sentence": "佛說七俱胝佛母心大准提陀羅",
        "from": "T20n1077_001:0185a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼經",
        "from": "T20n1077_001:0185a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐天竺三藏地婆訶羅譯",
        "from": "T20n1077_001:0185a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛在舍衛國祇樹給孤獨園。",
        "from": "T20n1077_001:0185a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時世尊思惟觀察。",
        "from": "T20n1077_001:0185a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍未來諸眾生故。",
        "from": "T20n1077_001:0185a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是七俱胝佛母心准提陀羅尼法。",
        "from": "T20n1077_001:0185a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1077_001:0185a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南謨颯哆南一三藐三勃陀俱胝南二怛姪他三唵折戾四主戾五准締六娑婆訶七若有比丘比丘尼優婆塞優婆夷。",
        "from": "T20n1077_001:0185a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦此陀羅尼滿八十萬遍無量劫來所造五無間等。",
        "from": "T20n1077_001:0185a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸罪皆悉消滅。",
        "from": "T20n1077_001:0185a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所在生處皆得值遇諸佛菩薩。",
        "from": "T20n1077_001:0185a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有資具隨意充足。",
        "from": "T20n1077_001:0185a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生常得出家。",
        "from": "T20n1077_001:0185a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具持菩薩律儀淨戒。",
        "from": "T20n1077_001:0185a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒生人天不墮惡趣。",
        "from": "T20n1077_001:0185a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常為諸天之所守護。",
        "from": "T20n1077_001:0185a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有在家善男女等誦持之者。",
        "from": "T20n1077_001:0185a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其家無有災橫病苦之所惱害。",
        "from": "T20n1077_001:0185a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有所作無不諧偶。",
        "from": "T20n1077_001:0185a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說言語人皆信受。",
        "from": "T20n1077_001:0185a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有誦此陀羅尼呪滿十萬遍。",
        "from": "T20n1077_001:0185a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢中得見諸佛菩薩聲聞緣覺。",
        "from": "T20n1077_001:0185a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自見口中吐出黑物。",
        "from": "T20n1077_001:0185a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有重罪誦滿二十萬遍。",
        "from": "T20n1077_001:0185a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢中亦見諸佛菩薩。",
        "from": "T20n1077_001:0185b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復自見吐出黑物。",
        "from": "T20n1077_001:0185b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有五逆罪。",
        "from": "T20n1077_001:0185b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得如是善夢之者。",
        "from": "T20n1077_001:0185b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜應更誦滿七十萬遍。",
        "from": "T20n1077_001:0185b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時還得如前之相。",
        "from": "T20n1077_001:0185b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至夢見吐出白色如酪飯等。",
        "from": "T20n1077_001:0185b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此人即是罪滅。",
        "from": "T20n1077_001:0185b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨之相。",
        "from": "T20n1077_001:0185b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次我今說此大陀羅尼所作之事。",
        "from": "T20n1077_001:0185b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於佛像前。",
        "from": "T20n1077_001:0185b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於塔前若清淨處。",
        "from": "T20n1077_001:0185b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿摩夷塗地。",
        "from": "T20n1077_001:0185b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作方壇隨其大小。",
        "from": "T20n1077_001:0185b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以花香幡蓋飲食燈燭。",
        "from": "T20n1077_001:0185b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力所辦而供養之。",
        "from": "T20n1077_001:0185b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復呪香水散於四方上下以為結界。",
        "from": "T20n1077_001:0185b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇四角及壇中央。",
        "from": "T20n1077_001:0185b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆各置一香水之瓶。",
        "from": "T20n1077_001:0185b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持呪之者於其壇中。",
        "from": "T20n1077_001:0185b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向東方胡跪。",
        "from": "T20n1077_001:0185b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪一千八遍。",
        "from": "T20n1077_001:0185b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其香水瓶即便自轉。",
        "from": "T20n1077_001:0185b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叉手捧雜花。",
        "from": "T20n1077_001:0185b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪千八遍。",
        "from": "T20n1077_001:0185b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散一鏡面。",
        "from": "T20n1077_001:0185b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於鏡前正觀。",
        "from": "T20n1077_001:0185b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪亦千八遍。",
        "from": "T20n1077_001:0185b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得見佛菩薩像。",
        "from": "T20n1077_001:0185b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應呪花百八遍。",
        "from": "T20n1077_001:0185b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而散供養。",
        "from": "T20n1077_001:0185b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨請問法無不決了。",
        "from": "T20n1077_001:0185b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有鬼病以呪茅草而拂病人即得除愈。",
        "from": "T20n1077_001:0185b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有幼小為鬼所著。",
        "from": "T20n1077_001:0185b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五色縷應令童女搓以為線。",
        "from": "T20n1077_001:0185b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一呪一結滿二十一。",
        "from": "T20n1077_001:0185b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用繫其頸。",
        "from": "T20n1077_001:0185b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以芥子呪滿七遍。",
        "from": "T20n1077_001:0185b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散其面即便除差。",
        "from": "T20n1077_001:0185b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法。",
        "from": "T20n1077_001:0185b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於病者前墨畫其形。",
        "from": "T20n1077_001:0185b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪楊枝打之。",
        "from": "T20n1077_001:0185b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦便除差。",
        "from": "T20n1077_001:0185b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法。",
        "from": "T20n1077_001:0185b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有病人為鬼所著身在遠處。",
        "from": "T20n1077_001:0185b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應呪楊枝具滿七遍。",
        "from": "T20n1077_001:0185b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄人持打即亦除差。",
        "from": "T20n1077_001:0185b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法。",
        "from": "T20n1077_001:0185b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在路行誦此呪。",
        "from": "T20n1077_001:0185b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有賊盜惡獸等畏。",
        "from": "T20n1077_001:0185b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法。",
        "from": "T20n1077_001:0185b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常持此呪。",
        "from": "T20n1077_001:0185b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有諍訟無不獲勝。",
        "from": "T20n1077_001:0185b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲往渡江河大海。",
        "from": "T20n1077_001:0185b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪而渡無有水中惡獸等難。",
        "from": "T20n1077_001:0185c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法。",
        "from": "T20n1077_001:0185c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若被繫閉枷鎖禁其身。",
        "from": "T20n1077_001:0185c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪者即得解脫。",
        "from": "T20n1077_001:0185c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法若諸國土水旱不調。",
        "from": "T20n1077_001:0185c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疫毒流行。",
        "from": "T20n1077_001:0185c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以酥和胡麻粳米。",
        "from": "T20n1077_001:0185c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用手三指取其一撮。",
        "from": "T20n1077_001:0185c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪之一遍置火中燒。",
        "from": "T20n1077_001:0185c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或經七日七夜。",
        "from": "T20n1077_001:0185c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六時如是相續不絕。",
        "from": "T20n1077_001:0185c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災疫悉皆消滅。",
        "from": "T20n1077_001:0185c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法。",
        "from": "T20n1077_001:0186a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於河渚間砂潬之上。",
        "from": "T20n1077_001:0186a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印。",
        "from": "T20n1077_001:0186a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印砂為塔形像。",
        "from": "T20n1077_001:0186a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪一遍印成一塔。",
        "from": "T20n1077_001:0186a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿六十萬遍。",
        "from": "T20n1077_001:0186a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見觀世音菩薩。",
        "from": "T20n1077_001:0186a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見多羅菩薩。",
        "from": "T20n1077_001:0186a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見金剛主菩薩。",
        "from": "T20n1077_001:0186a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心所求皆得滿足。",
        "from": "T20n1077_001:0186a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見授與仙藥。",
        "from": "T20n1077_001:0186a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見與受菩提之記。",
        "from": "T20n1077_001:0186a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法。",
        "from": "T20n1077_001:0186a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右遶菩提樹像。",
        "from": "T20n1077_001:0186a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪滿千萬遍。",
        "from": "T20n1077_001:0186a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見菩薩為其說法。",
        "from": "T20n1077_001:0186a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲隨菩薩即得隨從。",
        "from": "T20n1077_001:0186a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法。",
        "from": "T20n1077_001:0186a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若乞食時常持此呪。",
        "from": "T20n1077_001:0186a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為惡人惡狗等類之所惱害。",
        "from": "T20n1077_001:0186a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於塔前或佛像前或舍利塔前。",
        "from": "T20n1077_001:0186a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦持此呪三十萬遍。",
        "from": "T20n1077_001:0186a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於白月十五日設大供養。",
        "from": "T20n1077_001:0186a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日一夜不食正念誦呪。",
        "from": "T20n1077_001:0186a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得見金剛手菩薩。",
        "from": "T20n1077_001:0186a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼菩薩即將是人往於自宮。",
        "from": "T20n1077_001:0186a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次有法。",
        "from": "T20n1077_001:0186a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於轉法輪塔前或佛生處塔前。",
        "from": "T20n1077_001:0186a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或從忉利天下寶階塔前或舍利塔前。",
        "from": "T20n1077_001:0186a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如是等諸塔之前誦呪右遶。",
        "from": "T20n1077_001:0186a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見阿鉢羅是多菩薩及訶利底菩薩。",
        "from": "T20n1077_001:0186a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其所願皆悉滿足。",
        "from": "T20n1077_001:0186a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若須仙藥即便授之。",
        "from": "T20n1077_001:0186a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為說法示菩薩道。",
        "from": "T20n1077_001:0186a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有誦此陀羅尼者。",
        "from": "T20n1077_001:0186a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未坐道場。",
        "from": "T20n1077_001:0186a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩常為善友。",
        "from": "T20n1077_001:0186a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此准提大陀羅尼大明呪法。",
        "from": "T20n1077_001:0186a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去一切諸佛已說。",
        "from": "T20n1077_001:0186a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來一切諸佛當說。",
        "from": "T20n1077_001:0186a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在一切諸佛今說。",
        "from": "T20n1077_001:0186a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦如是說。",
        "from": "T20n1077_001:0186a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益一切眾生故。",
        "from": "T20n1077_001:0186a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得無上菩提故。",
        "from": "T20n1077_001:0186a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有薄福眾生。",
        "from": "T20n1077_001:0186a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無少善根者。",
        "from": "T20n1077_001:0186a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有根器之者。",
        "from": "T20n1077_001:0186a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有菩提分法者。",
        "from": "T20n1077_001:0186a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得聞此陀羅尼法。",
        "from": "T20n1077_001:0186a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速疾證得阿耨多羅三藐三菩提。",
        "from": "T20n1077_001:0186a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人能常自憶念。",
        "from": "T20n1077_001:0186a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦持此呪。",
        "from": "T20n1077_001:0186a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量善根皆得成就。",
        "from": "T20n1077_001:0186a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此大准提陀羅尼法時。",
        "from": "T20n1077_001:0186a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量眾生遠塵離垢。",
        "from": "T20n1077_001:0186a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大准提陀羅尼大明呪功德。",
        "from": "T20n1077_001:0186a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得見十方諸佛菩薩諸聖眾等作禮而去。",
        "from": "T20n1077_001:0186b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明呪藏六萬偈中出此七俱胝佛母心大准提陀羅尼經一卷垂拱二年於西魏國寺譯",
        "from": "T20n1077_001:0186b03_100",
        "context_with_next_sentence": false
    }
]