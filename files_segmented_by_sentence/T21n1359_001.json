[
    {
        "source_sentence": "佛說花積樓閣陀羅尼經",
        "from": "T21n1359_001:0877a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T21n1359_001:0877a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1359_001:0877a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1359_001:0877a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊在阿耨達池無熱惱龍王宮。",
        "from": "T21n1359_001:0877a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾四百五十人俱。",
        "from": "T21n1359_001:0877a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有師子遊戲菩薩等大菩薩眾具足千人。",
        "from": "T21n1359_001:0877a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆得陀羅尼十地圓滿。",
        "from": "T21n1359_001:0877a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得灌頂已位居補處。",
        "from": "T21n1359_001:0877a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被大甲冑趣諸佛德。",
        "from": "T21n1359_001:0877a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不退轉名稱普聞。",
        "from": "T21n1359_001:0877a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等菩薩摩訶薩。",
        "from": "T21n1359_001:0877a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉從他方而來集會。",
        "from": "T21n1359_001:0877a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時師子遊戲菩薩摩訶薩。",
        "from": "T21n1359_001:0877a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起偏袒右肩。",
        "from": "T21n1359_001:0877a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣世尊前右膝著地。",
        "from": "T21n1359_001:0877a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭肅而白佛言。",
        "from": "T21n1359_001:0877a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如佛福蘊當云何得。",
        "from": "T21n1359_001:0877a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於如來作供養者。",
        "from": "T21n1359_001:0877a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何因果無量無邊。",
        "from": "T21n1359_001:0877a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來慈悲開示。",
        "from": "T21n1359_001:0877a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是說已凝心而住。",
        "from": "T21n1359_001:0877a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告師子遊戲菩薩摩訶薩言。",
        "from": "T21n1359_001:0877a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉善男子。",
        "from": "T21n1359_001:0877a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今問我如來福蘊云何而得。",
        "from": "T21n1359_001:0877a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於如來作供養者。",
        "from": "T21n1359_001:0877a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何因果無量無邊。",
        "from": "T21n1359_001:0877a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當諦聽今為汝說。",
        "from": "T21n1359_001:0877a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善男子。",
        "from": "T21n1359_001:0877a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來有五法具足功德無量無邊。",
        "from": "T21n1359_001:0877a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何五法。",
        "from": "T21n1359_001:0877a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂戒定慧解脫解脫知見。",
        "from": "T21n1359_001:0877a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子如來具足如是五法無量功德。",
        "from": "T21n1359_001:0877a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故獲得福蘊無量無邊。",
        "from": "T21n1359_001:0877a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若於如來作供養者。",
        "from": "T21n1359_001:0877a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得涅槃若彼三乘隨其發心。",
        "from": "T21n1359_001:0877a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各所見而得涅槃。",
        "from": "T21n1359_001:0877a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若見如來應正等覺。",
        "from": "T21n1359_001:0877a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨心諦信歸命尊重稱讚。",
        "from": "T21n1359_001:0877a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以衣服臥具病緣醫藥。",
        "from": "T21n1359_001:0877a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所須而供養者。",
        "from": "T21n1359_001:0877a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲果報無量無邊。",
        "from": "T21n1359_001:0877b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若復如來般涅槃後。",
        "from": "T21n1359_001:0877b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有得如來舍利如芥子等而供養者。",
        "from": "T21n1359_001:0877b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲果報於一切中最。",
        "from": "T21n1359_001:0877b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復作種種福。",
        "from": "T21n1359_001:0877b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於如來舍利作供養者。",
        "from": "T21n1359_001:0877b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其福最上。",
        "from": "T21n1359_001:0877b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子遊戲。",
        "from": "T21n1359_001:0877b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人持於寶聚如妙高山等。",
        "from": "T21n1359_001:0877b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施供養聲聞及辟支佛。",
        "from": "T21n1359_001:0877b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲果報。",
        "from": "T21n1359_001:0877b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如在家及出家菩薩發無上正等覺心。",
        "from": "T21n1359_001:0877b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一金錢布施供養。",
        "from": "T21n1359_001:0877b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來應正覺。",
        "from": "T21n1359_001:0877b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前方便善根。",
        "from": "T21n1359_001:0877b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於後方便善根。",
        "from": "T21n1359_001:0877b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百分不及一。",
        "from": "T21n1359_001:0877b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千分不及一。",
        "from": "T21n1359_001:0877b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千分不及一。",
        "from": "T21n1359_001:0877b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至算分數分譬喻分譬喻轉分。",
        "from": "T21n1359_001:0877b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至算數譬喻所不能及。",
        "from": "T21n1359_001:0877b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子又復如來住世百年千年。",
        "from": "T21n1359_001:0877b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至百千年應化畢已。",
        "from": "T21n1359_001:0877b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般涅槃後以佛舍利而起妙塔。",
        "from": "T21n1359_001:0877b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於此塔所。",
        "from": "T21n1359_001:0877b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香泥塗地作曼拏羅。",
        "from": "T21n1359_001:0877b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施設花鬘塗香燒香然燈志心供養。",
        "from": "T21n1359_001:0877b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至持一花一燈以為供養。",
        "from": "T21n1359_001:0877b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或持帚拂除去塵坌。",
        "from": "T21n1359_001:0877b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以一掬水用為灑淨。",
        "from": "T21n1359_001:0877b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人以志心故獲福無量。",
        "from": "T21n1359_001:0877b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人先世所有罪業當墮阿鼻地獄。",
        "from": "T21n1359_001:0877b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以於塔所作供養故。",
        "from": "T21n1359_001:0877b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先世罪報皆悉除滅。",
        "from": "T21n1359_001:0877b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若復有人。",
        "from": "T21n1359_001:0877b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發一念心歸命於佛。",
        "from": "T21n1359_001:0877b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又不中退復不輕慢。",
        "from": "T21n1359_001:0877b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人當來於百劫千劫乃至百千劫中。",
        "from": "T21n1359_001:0877b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常感勝福生於人天不復墮落一切惡趣。",
        "from": "T21n1359_001:0877b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我今說此花積樓閣陀羅尼經。",
        "from": "T21n1359_001:0877b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利益安樂天上人間一切眾生故。",
        "from": "T21n1359_001:0877b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若復有人得此花積樓閣陀羅尼經。",
        "from": "T21n1359_001:0877b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心受持讀誦供養。",
        "from": "T21n1359_001:0877b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復演彼真實義趣廣為人說。",
        "from": "T21n1359_001:0877b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人永不墮一切惡趣。",
        "from": "T21n1359_001:0877b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不生卑下種族。",
        "from": "T21n1359_001:0877b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常生人天殊勝之處。",
        "from": "T21n1359_001:0877b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根圓滿獲宿命通。",
        "from": "T21n1359_001:0877b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足種種甚深辯才。",
        "from": "T21n1359_001:0877b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒得值遇佛法僧寶。",
        "from": "T21n1359_001:0877b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又得如來憶念覆護。",
        "from": "T21n1359_001:0877b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得菩提心永不退轉。",
        "from": "T21n1359_001:0877b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說陀羅尼曰。",
        "from": "T21n1359_001:0877c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合他引一馱囉尼馱囉尼二母儞引鉢囉二合婆引娑嚩二合哩引三悉地引贊捺哩二合引四曩引他唧儞哩賀二合引哩引五阿引嚕引誐也二合嚩底六沒馱縛底七尾哩引烏迦致囉祖波誐帝引八帝引祖嚩底九尾捨引羅沒地達哩麼二合引嚩婆引細引十阿乞叉二合野羯臘閉二合引十一羯臘波二合嚩底十二阿蜜哩二合哆羯臘閉二合引十三護哆引舍儞引十四帝引祖嚩底儞怛也二合三摩引呬帝引十五帝引祖嚩底底乞叉𧹞三合捺哩二合野沒地娑嚩二合引賀引十六善男子此陀羅尼。",
        "from": "T21n1359_001:0877c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是十方無量無邊諸佛如來同共宣說。",
        "from": "T21n1359_001:0877c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人聞此陀羅尼經名字。",
        "from": "T21n1359_001:0877c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發至誠心恭信供養。",
        "from": "T21n1359_001:0877c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人當來獲得無量無邊功德。",
        "from": "T21n1359_001:0877c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復若人持此陀羅尼。",
        "from": "T21n1359_001:0877c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成先行已。",
        "from": "T21n1359_001:0877c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於二月三月或八月。",
        "from": "T21n1359_001:0877c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取白月八日起首。",
        "from": "T21n1359_001:0877c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發至誠心於一晝夜中六時。",
        "from": "T21n1359_001:0877c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此陀羅尼及憶念諸佛如來。",
        "from": "T21n1359_001:0877c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不散亂。",
        "from": "T21n1359_001:0877c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以塗香妙花燒香然燈。",
        "from": "T21n1359_001:0877c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種供養心不間斷至十五日決定得見世尊。",
        "from": "T21n1359_001:0877c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐蓮華藏座說陀羅尼法。",
        "from": "T21n1359_001:0877c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦之人應時獲得意願圓滿。",
        "from": "T21n1359_001:0877c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心垢悉除證宿命通。",
        "from": "T21n1359_001:0877c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得諸禪定住四聖諦。",
        "from": "T21n1359_001:0877c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解諸法義論及工巧事業。",
        "from": "T21n1359_001:0877c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至臨命終時耳根不壞。",
        "from": "T21n1359_001:0877c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能了別一切勝事。",
        "from": "T21n1359_001:0877c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至或聞如來為說四聖諦等無漏。",
        "from": "T21n1359_001:0877c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是陀羅尼經已。",
        "from": "T21n1359_001:0877c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子遊戲菩薩摩訶薩。",
        "from": "T21n1359_001:0877c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸大菩薩大比丘眾。",
        "from": "T21n1359_001:0877c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天人阿修羅乾闥婆等。",
        "from": "T21n1359_001:0877c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說。",
        "from": "T21n1359_001:0877c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜禮佛而退。",
        "from": "T21n1359_001:0877c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說花積樓閣陀羅尼經",
        "from": "T21n1359_001:0877c28_100",
        "context_with_next_sentence": false
    }
]