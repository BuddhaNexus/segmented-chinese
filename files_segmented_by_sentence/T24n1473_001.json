[
    {
        "source_sentence": "佛說沙彌十戒儀則經計七十二頌",
        "from": "T24n1473_001:0935b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T24n1473_001:0935b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T24n1473_001:0935b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮一切智，　　妙法及聖眾，",
        "from": "T24n1473_001:0935b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略說沙彌行，　　令發出家心。",
        "from": "T24n1473_001:0935b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼釋迦教，　　堅持於禁戒，",
        "from": "T24n1473_001:0935b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒如護身，　　防守勿令犯。",
        "from": "T24n1473_001:0935b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜臥從早起，　　淨口及牙齒，",
        "from": "T24n1473_001:0935b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦至天明，　　頂禮正等覺。",
        "from": "T24n1473_001:0935b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參近於師房，　　以手輕擊門，",
        "from": "T24n1473_001:0935b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入已問訊師，　　身體安樂不？",
        "from": "T24n1473_001:0935b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是所作已，　　復作曼拏羅，",
        "from": "T24n1473_001:0935b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養而恭敬，　　早辰觀水內，",
        "from": "T24n1473_001:0935b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中後時亦然，　　甕器盂鉢等。",
        "from": "T24n1473_001:0935b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水蟲有大小，　　志心恒觀照，",
        "from": "T24n1473_001:0935b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以羅淨濾水，　　審觀而可用。",
        "from": "T24n1473_001:0935b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食飲懷慈愍，　　勿令殺害蟲，",
        "from": "T24n1473_001:0935b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至草木上，　　塗壇牛糞中，",
        "from": "T24n1473_001:0935b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是受用時，　　救護於含識。",
        "from": "T24n1473_001:0935b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或彼床座內，　　田地糞土中，",
        "from": "T24n1473_001:0935b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一子細觀，　　是名出家行。",
        "from": "T24n1473_001:0935b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切承事師，　　洗鉢令清淨，",
        "from": "T24n1473_001:0935b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依時三作禮，　　合掌向師前。",
        "from": "T24n1473_001:0935b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問師何所食？",
        "from": "T24n1473_001:0935b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是若為食，　　用前清淨水，",
        "from": "T24n1473_001:0935b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以水灌手淨，　　如法默然食。",
        "from": "T24n1473_001:0935b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食已說二偈，　　迴向於信施，",
        "from": "T24n1473_001:0935c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說而依行，　　增長正念行。",
        "from": "T24n1473_001:0935c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信解淨戒法，　　依法而修持，",
        "from": "T24n1473_001:0935c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正觀自相應，　　出家心安樂。",
        "from": "T24n1473_001:0935c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人自犯戒，　　他見生輕毀，",
        "from": "T24n1473_001:0935c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二人皆得罪，　　持者須一心。",
        "from": "T24n1473_001:0935c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒或破戒，　　乃至病患人，",
        "from": "T24n1473_001:0935c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法不當機，　　他聞心不重，",
        "from": "T24n1473_001:0935c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終得大苦。",
        "from": "T24n1473_001:0935c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及行呪法等，　　令他得命終，",
        "from": "T24n1473_001:0935c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復以種種，　　方便而行殺，",
        "from": "T24n1473_001:0935c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是破戒因，　　永沈三惡道，",
        "from": "T24n1473_001:0935c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄鬼畜生，　　如次受罪報。",
        "from": "T24n1473_001:0935c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及彼諸天輩，　　若或亦殺生，",
        "from": "T24n1473_001:0935c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還墮惡趣中，　　受彼諸惡報。",
        "from": "T24n1473_001:0935c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有出家者，　　恣用身口意，",
        "from": "T24n1473_001:0935c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誤殺螻蟻類，　　於其三業中，",
        "from": "T24n1473_001:0935c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得三種罪。",
        "from": "T24n1473_001:0935c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土石及塼瓦，　　打擲於有情，",
        "from": "T24n1473_001:0935c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "駝騾禽獸等，　　亦得破戒罪。",
        "from": "T24n1473_001:0935c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "駝騾象馬類，　　而欲輒乘騎，",
        "from": "T24n1473_001:0935c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來逼迫他，　　亦得破戒罪。",
        "from": "T24n1473_001:0935c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有出家者，　　不得行偷盜，",
        "from": "T24n1473_001:0935c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自若教他，　　偷得於財物，",
        "from": "T24n1473_001:0935c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦哩沙波拏，　　四分中一分，",
        "from": "T24n1473_001:0935c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是破戒因，　　而成最重罪。",
        "from": "T24n1473_001:0935c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食穀米等，　　花菓草木類，",
        "from": "T24n1473_001:0935c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地生或水生，　　而行於偷竊，",
        "from": "T24n1473_001:0935c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或偷官稅利，　　私過於關津，",
        "from": "T24n1473_001:0935c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及盜於有情，　　二足與多足。",
        "from": "T24n1473_001:0936a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或彼出家人，　　受用雖具足，",
        "from": "T24n1473_001:0936a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪心復盜財，　　俱獲於重罪。",
        "from": "T24n1473_001:0936a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自衣鉢等，　　被賊所劫盜，",
        "from": "T24n1473_001:0936a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿得強取之，　　說法方便化，",
        "from": "T24n1473_001:0936a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復而迴買，　　不允隨他意。",
        "from": "T24n1473_001:0936a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名出家心，　　不動三業瘡，",
        "from": "T24n1473_001:0936a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒性自成就。",
        "from": "T24n1473_001:0936a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若有出家者，不得行婬欲。",
        "from": "T24n1473_001:0936a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自來相慕欲，　　愚迷而愛著，",
        "from": "T24n1473_001:0936a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得彼根本罪。",
        "from": "T24n1473_001:0936a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蛇如毒藥，　　損壞於自身，",
        "from": "T24n1473_001:0936a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大地獄苦，　　障礙於涅槃，",
        "from": "T24n1473_001:0936a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不出於生死。",
        "from": "T24n1473_001:0936a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　正覺非如是，未曾身犯戒，　　持戒獲大利。",
        "from": "T24n1473_001:0936a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有出家者，　　不得出妄語。",
        "from": "T24n1473_001:0936a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若言見天人，　　與我同言語，",
        "from": "T24n1473_001:0936a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大人所住處，　　我自亦曾到，",
        "from": "T24n1473_001:0936a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至乾闥婆，　　恭伴龍夜叉，",
        "from": "T24n1473_001:0936a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩睺羅伽輩，　　毘舍緊那羅，",
        "from": "T24n1473_001:0936a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉢哩哆鬼等，　　與我恒言話，",
        "from": "T24n1473_001:0936a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此皆為妄語。",
        "from": "T24n1473_001:0936a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正道及四果，　　曉了甚深法，",
        "from": "T24n1473_001:0936a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得言為得，　　如斯之妄語，",
        "from": "T24n1473_001:0936a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永沈於惡趣。",
        "from": "T24n1473_001:0936a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離別他善友，　　及彼麁惡言，",
        "from": "T24n1473_001:0936a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綺說非與是。",
        "from": "T24n1473_001:0936a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿得酬對他，　　種種鬪諍言，",
        "from": "T24n1473_001:0936a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一須忍受。",
        "from": "T24n1473_001:0936a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若彼不依行，而得犯戒罪；",
        "from": "T24n1473_001:0936b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　智者一心持，獲離口業過。",
        "from": "T24n1473_001:0936b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若以穀米等，為酒醉於人，　　不得而故飲。",
        "from": "T24n1473_001:0936b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以甘蔗花，　　蒲萄菓實等，",
        "from": "T24n1473_001:0936b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修醞可醉人，　　不得而故飲。",
        "from": "T24n1473_001:0936b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自飲教他飲，　　迷亂而失念，",
        "from": "T24n1473_001:0936b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長放逸心，　　飲者得重罪。",
        "from": "T24n1473_001:0936b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故世尊言，　　若人以草葉，",
        "from": "T24n1473_001:0936b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滴酒於口中，　　增長於過失。",
        "from": "T24n1473_001:0936b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歌舞兼倡妓，　　故往而觀看，",
        "from": "T24n1473_001:0936b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得犯戒罪。",
        "from": "T24n1473_001:0936b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旃檀欝金等，　　及以好花鬘，",
        "from": "T24n1473_001:0936b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金銀珠寶類，　　種種莊嚴身，",
        "from": "T24n1473_001:0936b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得犯戒罪。",
        "from": "T24n1473_001:0936b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若於眼目上，點畫令端正，　　而得犯戒罪。",
        "from": "T24n1473_001:0936b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座床臥床等，　　量高可一肘，",
        "from": "T24n1473_001:0936b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不作莊嚴，　　復不令廣大，",
        "from": "T24n1473_001:0936b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放逸不依行，　　而得犯戒罪。",
        "from": "T24n1473_001:0936b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說出家人，　　過失宜遠離。",
        "from": "T24n1473_001:0936b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受齋食時，　　不得過中午，",
        "from": "T24n1473_001:0936b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日出至午前，　　可許受齋飯；",
        "from": "T24n1473_001:0936b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非時而喫食，　　佛說得重罪。",
        "from": "T24n1473_001:0936b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如有比丘病，　　治病救於身，",
        "from": "T24n1473_001:0936b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可許中後食；",
        "from": "T24n1473_001:0936b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　無病不依時，而得犯戒罪。",
        "from": "T24n1473_001:0936b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出家不得觸，　　受者生於貪，",
        "from": "T24n1473_001:0936b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得犯戒罪。",
        "from": "T24n1473_001:0936b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養佛法僧，　　為彼興福利，",
        "from": "T24n1473_001:0936b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可許而受用。",
        "from": "T24n1473_001:0936b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿得生愛著，　　若有貪著者，",
        "from": "T24n1473_001:0936c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人須擯出。",
        "from": "T24n1473_001:0936c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　所有戲笑等，沙彌不得作，　　作者得犯罪。",
        "from": "T24n1473_001:0936c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有呵欠時，　　以手遮蓋口，",
        "from": "T24n1473_001:0936c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不依而得罪。",
        "from": "T24n1473_001:0936c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不審而頂禮，　　新戒等啑噴，",
        "from": "T24n1473_001:0936c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上座須呪願，　　長壽無其病。",
        "from": "T24n1473_001:0936c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙彌向師前，　　不得於洟唾，",
        "from": "T24n1473_001:0936c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得刷牙齒。",
        "from": "T24n1473_001:0936c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　不得向師前，經行及對座。",
        "from": "T24n1473_001:0936c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　耆年宿德者，如法而尊重。",
        "from": "T24n1473_001:0936c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若入觸溷時，如有後來者，　　低聲而警覺。",
        "from": "T24n1473_001:0936c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所濾無蟲水，　　用添於淨瓶，",
        "from": "T24n1473_001:0936c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨手安詳行，　　不失出家行。",
        "from": "T24n1473_001:0936c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師自座臥床，　　恒用淨襯褥，",
        "from": "T24n1473_001:0936c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有床椅等，　　不得沙彌座。",
        "from": "T24n1473_001:0936c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師自若不在，　　依止清淨僧，",
        "from": "T24n1473_001:0936c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明了律儀者，　　承事而侍奉；",
        "from": "T24n1473_001:0936c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿更依別僧，　　違者而得罪。",
        "from": "T24n1473_001:0936c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若出行，　　而為求緣事，",
        "from": "T24n1473_001:0936c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五日內復歸，　　得利同行眾；",
        "from": "T24n1473_001:0936c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾得利亦然，　　復與外來者，",
        "from": "T24n1473_001:0936c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如過五日後，　　二俱各無分。",
        "from": "T24n1473_001:0936c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙彌大小便，　　須問佛僧地，",
        "from": "T24n1473_001:0936c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得亂往來，　　行依自界分。",
        "from": "T24n1473_001:0936c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切凡所作，　　合掌先問師，",
        "from": "T24n1473_001:0936c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是所作為，　　不失於正行。",
        "from": "T24n1473_001:0936c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日沒禮佛塔，　　禮已復問師，",
        "from": "T24n1473_001:0936c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與師濯雙足，　　事畢一心聽，",
        "from": "T24n1473_001:0936c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顒望於所須。",
        "from": "T24n1473_001:0937a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　初夜及後夜，持誦勿須停。",
        "from": "T24n1473_001:0937a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　中夜睡眠時，如彼師子臥。",
        "from": "T24n1473_001:0937a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心而依行，　　薰識賢種子，",
        "from": "T24n1473_001:0937a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱自斷除，　　速成無上覺。",
        "from": "T24n1473_001:0937a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說沙彌十戒儀則經",
        "from": "T24n1473_001:0937a06_100",
        "context_with_next_sentence": false
    }
]