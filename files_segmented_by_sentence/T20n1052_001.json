[
    {
        "source_sentence": "讚觀世音菩薩頌",
        "from": "T20n1052_001:0067a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐天后代佛授記寺翻經沙門",
        "from": "T20n1052_001:0067a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧智奉　制譯",
        "from": "T20n1052_001:0067a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩號為觀世音　　神通無礙難可量",
        "from": "T20n1052_001:0067a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搖山竭海震大地　　悲愍眾生同一體",
        "from": "T20n1052_001:0067a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記憶名號福不虛　　是故常應稱念彼",
        "from": "T20n1052_001:0067a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今至誠念彼德　　以是敬心而讚歎",
        "from": "T20n1052_001:0067a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩智慧深如海　　方便善權無能測",
        "from": "T20n1052_001:0067a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有諸天阿脩羅　　摩睺羅伽及人眾",
        "from": "T20n1052_001:0067a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸以微妙清淨偈　　歷劫讚之無懈倦",
        "from": "T20n1052_001:0067a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今宣說春陽頌　　述其功德之少分",
        "from": "T20n1052_001:0067a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間形色尊嚴者　　諸天莫踰於梵王",
        "from": "T20n1052_001:0067a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況聖自在本色身　　百千萬分不及一",
        "from": "T20n1052_001:0067a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者首飾甚嚴好　　冠以曼陀及金花",
        "from": "T20n1052_001:0067b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虹蜺美麗以莊嚴　　復如半月映山王",
        "from": "T20n1052_001:0067b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又似百寶成須彌　　尊者身相甚微妙",
        "from": "T20n1052_001:0067b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如輕雨籠寶岳　　伊尼鹿彩覆其肩",
        "from": "T20n1052_001:0067b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明晃朗普周遍　　巍巍挺特若金山",
        "from": "T20n1052_001:0067b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如滿月處虛空　　又似薝波迦花色",
        "from": "T20n1052_001:0067b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝彼摩醯首羅身　　徒以白龍為瓔珞",
        "from": "T20n1052_001:0067b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手執持金蓮花　　毘琉璃寶以為莖",
        "from": "T20n1052_001:0067b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以慈開敷極香潔　　令諸智者生愛樂",
        "from": "T20n1052_001:0067b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊手所持勝淨花　　莊嚴殊妙甚暉麗",
        "from": "T20n1052_001:0067b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如月光曜須彌頂　　聖身所處蓮花臺",
        "from": "T20n1052_001:0067b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由尊福德之所感　　我以至誠慇重心",
        "from": "T20n1052_001:0067b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命敬禮賜願者　　諸天供養所讚歎",
        "from": "T20n1052_001:0067b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今淨心歸命禮　　尊者螺髻玄蜂色",
        "from": "T20n1052_001:0067b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牟尼妙像處其中　　光明映曜嚴尊首",
        "from": "T20n1052_001:0067b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如燒珊瑚流電色　　又如雌黃耀黑山",
        "from": "T20n1052_001:0067b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上下莊嚴大聖身　　冒敢為文稱歎彼",
        "from": "T20n1052_001:0067b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面狂象利牙齒　　若人居中將被害",
        "from": "T20n1052_001:0067b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人專心念菩薩　　捨離苦惱而無畏",
        "from": "T20n1052_001:0067b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暴龍哮吼放烟毒　　嘊喍瞋怒厲惡色",
        "from": "T20n1052_001:0067b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將噬其人甚可怖　　憶念觀音便解脫",
        "from": "T20n1052_001:0067b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海潮風浪出音聲　　摩竭巨魚皆震激",
        "from": "T20n1052_001:0067b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人船破誤落中　　念彼觀音獲安隱",
        "from": "T20n1052_001:0067b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高山嶮谷懸巖裏　　奔流濺石眾難處",
        "from": "T20n1052_001:0067b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人墮中無救護　　心念觀音登彼岸",
        "from": "T20n1052_001:0067b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烈火猛焰惡風起　　延燒屋宅焚及人",
        "from": "T20n1052_001:0067b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心念彼功德藏　　應時災火不為害",
        "from": "T20n1052_001:0067b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人繫縛在牢獄　　身嬰枷鎖及杻械",
        "from": "T20n1052_001:0067b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心稱念觀音故　　其人須臾便解脫",
        "from": "T20n1052_001:0067b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人墮落大火坑　　專志稱名觀世音",
        "from": "T20n1052_001:0067c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人除熱得清淨　　猶若池中華開敷",
        "from": "T20n1052_001:0067c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人經於大林中　　忽遇雷電驟風雨",
        "from": "T20n1052_001:0067c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "霹靂將燒極危殆　　稱念觀音免災難",
        "from": "T20n1052_001:0067c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人逢值猛師子　　牙爪銛利如刀劍",
        "from": "T20n1052_001:0067c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋目吼喚來食人　　稱念觀音便免害",
        "from": "T20n1052_001:0067c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡賊突厥彌戾車　　兇險無慈若羅剎",
        "from": "T20n1052_001:0067c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以鐵鎖繫縛人　　稱名發念皆解脫",
        "from": "T20n1052_001:0067c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深山大澤險難處　　劫賊伺人將抄奪",
        "from": "T20n1052_001:0067c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱名念力願救護　　其人釋然無患苦",
        "from": "T20n1052_001:0067c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪呾讒訟擬中傷　　恒以惡心求方便",
        "from": "T20n1052_001:0067c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由彼常念觀音故　　其人竟不能為害",
        "from": "T20n1052_001:0067c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬪戰旗鼓兩相當　　鋒鏑交橫競殘刃",
        "from": "T20n1052_001:0067c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此時心念及稱名　　菩薩於中施無畏",
        "from": "T20n1052_001:0067c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大力惡鬼執捉人　　鳩槃荼等飲人髓",
        "from": "T20n1052_001:0067c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能繫念觀音者　　擁護其人銷疫難",
        "from": "T20n1052_001:0067c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼病熱病腹脹病　　疳病黃病心痛病",
        "from": "T20n1052_001:0067c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癩病癲病霍亂病　　血氣羸瘦種種病",
        "from": "T20n1052_001:0067c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡黑業纏其身　　稱名繫念皆除愈",
        "from": "T20n1052_001:0067c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有諸餓鬼腹如山　　脣口乾焦飢渴惱",
        "from": "T20n1052_001:0067c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩見之生慈悲　　次第令其得充足",
        "from": "T20n1052_001:0067c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓鬼或遭寒凍逼　　身體皮肉皆破壞",
        "from": "T20n1052_001:0067c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉彼兩手生極苦　　神通方便令熅適",
        "from": "T20n1052_001:0067c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若金翅鳥以嘴爪　　搏撮水陸諸龍等",
        "from": "T20n1052_001:0067c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其龍專心念菩薩　　即得離苦獲安樂",
        "from": "T20n1052_001:0067c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有欲求勝果報　　象馬車乘及奴婢",
        "from": "T20n1052_001:0067c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣服飲食諸珍寶　　由彼常念觀音故",
        "from": "T20n1052_001:0067c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應其求願自然至　　若有欲得長生術",
        "from": "T20n1052_001:0067c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐臥雲間恣空行　　由彼常念觀音故",
        "from": "T20n1052_001:0067c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲神呪及仙藥　　我見壁畫觀音像",
        "from": "T20n1052_001:0068a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍視色相諸功德　　及見神通大自在",
        "from": "T20n1052_001:0068a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故起至誠而讚歎　　所有一切諸功德",
        "from": "T20n1052_001:0068a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩中最第一　　無邊善巧大方便",
        "from": "T20n1052_001:0068a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現清淨妙色身　　遠離有無諸分別",
        "from": "T20n1052_001:0068a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益無量如虛空　　以此讚歎功德藏",
        "from": "T20n1052_001:0068a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願證如來一切智以此讚歎觀世音菩薩功德上資。",
        "from": "T20n1052_001:0068a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國主聖神皇帝陛下善轉金輪。",
        "from": "T20n1052_001:0068a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色力壽命永無窮盡。",
        "from": "T20n1052_001:0068a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧果報不可思議。",
        "from": "T20n1052_001:0068a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒御閻浮長居震旦。",
        "from": "T20n1052_001:0068a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護三寶利益群生。",
        "from": "T20n1052_001:0068a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切含靈皆蒙聖福。",
        "from": "T20n1052_001:0068a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚觀世音菩薩頌",
        "from": "T20n1052_001:0068a13_100",
        "context_with_next_sentence": false
    }
]