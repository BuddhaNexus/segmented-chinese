[
    {
        "source_sentence": "毘那夜迦誐那鉢底瑜伽悉地品",
        "from": "T21n1273_001:0321b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕要",
        "from": "T21n1273_001:0321b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "含光記",
        "from": "T21n1273_001:0321b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古今諸師。",
        "from": "T21n1273_001:0321b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深祕之故不載經中。",
        "from": "T21n1273_001:0321b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或出真言不顯其理。",
        "from": "T21n1273_001:0321b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末代學者多被障礙。",
        "from": "T21n1273_001:0321b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故含光法師親從不空智和尚。",
        "from": "T21n1273_001:0321b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔受此法祕義。",
        "from": "T21n1273_001:0321b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍今聊舉略記之。",
        "from": "T21n1273_001:0321c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誐那鉢底王真言曰亦名毘那夜迦。",
        "from": "T21n1273_001:0321c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􄖩曩􄗭謨􄙘尾􄖩那􈃷翼􄑀迦二合􄙢瀉􄚨賀􄙼悉􇧻底二合􈁃母􄑌佉􄙢瀉􄕗怛􄟯儞野二合􄕤他引􇩂唵􄖩娜去聲下同􈃷翼􄑀迦二合􄙘尾􄖩娜􈃷翼􄑀迦二合􄩞怛羅二合􈃷翼􄑀迦二合􆯯簸哩二合􄩞怛羅二合􈃷翼􄑀迦二合􄙬餉引式尚反􄑌佉􄚨賀􆶫悉底二合􄙬餉引􄑌佉􄑀迦􄑾只􄕗多有增加句可隨所求事所謂息災增益敬愛調伏鉤召等有其梵名阿闍梨能可有分別但常途之時加息災語可見本軌􅁥娑婆􄚩賀若欲息災。",
        "from": "T21n1273_001:0321c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於娑婆賀上加扇底迦羅二合之句。",
        "from": "T21n1273_001:0321c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲求財。",
        "from": "T21n1273_001:0321c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於娑婆賀上加輔瑟置二合迦之句。",
        "from": "T21n1273_001:0321c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲求愛。",
        "from": "T21n1273_001:0321c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除前句加縛試羯羅拏之句。",
        "from": "T21n1273_001:0321c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲伏惡。",
        "from": "T21n1273_001:0321c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除前句加阿毘遮嚕迦之句。",
        "from": "T21n1273_001:0321c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲求延命。",
        "from": "T21n1273_001:0321c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除前句加惹儞多之句。",
        "from": "T21n1273_001:0321c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲鉤召。",
        "from": "T21n1273_001:0321c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除前句加鴦俱捨之句。",
        "from": "T21n1273_001:0321c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸語含眾多悉地也。",
        "from": "T21n1273_001:0321c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦生歡喜心雙身真言曰。",
        "from": "T21n1273_001:0321c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􇩂唵􄮦儗哩二合入􄑣虐有增加句。",
        "from": "T21n1273_001:0321c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前准常途之時。",
        "from": "T21n1273_001:0321c24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加息災句娑縛賀行者常誦此呪無有障礙。",
        "from": "T21n1273_001:0321c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是真言中顯權實義。",
        "from": "T21n1273_001:0321c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T21n1273_001:0321c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儗哩者是觀自在菩薩種子字也。",
        "from": "T21n1273_001:0321c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩現此身為其婦而勸進。",
        "from": "T21n1273_001:0321c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令毘那夜迦不作障礙。",
        "from": "T21n1273_001:0321c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有往昔因緣如餘部說。",
        "from": "T21n1273_001:0321c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為權義。",
        "from": "T21n1273_001:0322a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次虐者是毘那夜迦神種子。",
        "from": "T21n1273_001:0322a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此常隨魔也。",
        "from": "T21n1273_001:0322a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何常隨魔。",
        "from": "T21n1273_001:0322a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂恒常隨逐一切有情伺求其短。",
        "from": "T21n1273_001:0322a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然天魔地魔不爾。",
        "from": "T21n1273_001:0322a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯時而來而作障難。",
        "from": "T21n1273_001:0322a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦常隨作障難。",
        "from": "T21n1273_001:0322a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名常隨魔也。",
        "from": "T21n1273_001:0322a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使梵王及憍尸迦諸天龍等。",
        "from": "T21n1273_001:0322a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能破如斯障難。",
        "from": "T21n1273_001:0322a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有觀世音及軍荼利菩薩。",
        "from": "T21n1273_001:0322a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除此毘那夜迦難也。",
        "from": "T21n1273_001:0322a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云若知身中有諸障難。",
        "from": "T21n1273_001:0322a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求善事多不如心者。",
        "from": "T21n1273_001:0322a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以香水浴此觀世音像。",
        "from": "T21n1273_001:0322a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復取此水呪一百八遍。",
        "from": "T21n1273_001:0322a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以浴毘那夜迦像。",
        "from": "T21n1273_001:0322a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復取呪之一百八遍。",
        "from": "T21n1273_001:0322a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自灑我行者身。",
        "from": "T21n1273_001:0322a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切障難自然消滅。",
        "from": "T21n1273_001:0322a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有所求無不如意云云用觀世音十一面根本真言。",
        "from": "T21n1273_001:0322a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作前法也。",
        "from": "T21n1273_001:0322a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軍荼利菩薩。",
        "from": "T21n1273_001:0322a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多有除毘那夜迦難之證文。",
        "from": "T21n1273_001:0322a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如餘部廣說見集經等雙身毘那夜迦調伏他惡真言曰。",
        "from": "T21n1273_001:0322a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵虐虐吽娑嚩二合賀行者若欲縛惡人用此真言。",
        "from": "T21n1273_001:0322a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲遣除惡人亦用此呪。",
        "from": "T21n1273_001:0322a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真言偏顯兩實義。",
        "from": "T21n1273_001:0322a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故以一字重為二字。",
        "from": "T21n1273_001:0322a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋其實即權。",
        "from": "T21n1273_001:0322a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故權。",
        "from": "T21n1273_001:0322a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂佛菩薩為降伏諸懈怠故。",
        "from": "T21n1273_001:0322a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現此身也。",
        "from": "T21n1273_001:0322a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有障難從懈怠起。",
        "from": "T21n1273_001:0322a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若止懈怠者障難不起也。",
        "from": "T21n1273_001:0322a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權即依實。",
        "from": "T21n1273_001:0322a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故一字重稱也。",
        "from": "T21n1273_001:0322a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實即顯權。",
        "from": "T21n1273_001:0322a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故知之佛菩薩化也。",
        "from": "T21n1273_001:0322a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛者毘盧遮那佛即宣言。",
        "from": "T21n1273_001:0322a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所不至之身。",
        "from": "T21n1273_001:0322a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為化度隨類眾生。",
        "from": "T21n1273_001:0322a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢最後現毘那夜迦也云云菩薩者觀世音菩薩也。",
        "from": "T21n1273_001:0322a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛菩薩為男女天化度眾生。",
        "from": "T21n1273_001:0322a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今說毘那夜迦形有多種。",
        "from": "T21n1273_001:0322a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或似人天或似婆羅門。",
        "from": "T21n1273_001:0322a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現男女端正之貌。",
        "from": "T21n1273_001:0322a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即分四部攝眾多類。",
        "from": "T21n1273_001:0322a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種作諸障礙。",
        "from": "T21n1273_001:0322a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯大聖天歡喜王。",
        "from": "T21n1273_001:0322a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是權現之身。",
        "from": "T21n1273_001:0322a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所說。",
        "from": "T21n1273_001:0322a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲誘進諸作障者令入正見故。",
        "from": "T21n1273_001:0322a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以不似餘毘那夜迦而現象頭。",
        "from": "T21n1273_001:0322b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是示喻故。",
        "from": "T21n1273_001:0322b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂如象王雖有瞋恚強力。",
        "from": "T21n1273_001:0322b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能隨養育者及調御師也。",
        "from": "T21n1273_001:0322b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誐那鉢底亦復如是。",
        "from": "T21n1273_001:0322b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖現障身。",
        "from": "T21n1273_001:0322b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能隨歸依人乃至歸佛者。",
        "from": "T21n1273_001:0322b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故此天現象頭也。",
        "from": "T21n1273_001:0322b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦亦名毘那怛迦。",
        "from": "T21n1273_001:0322b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云象鼻也。",
        "from": "T21n1273_001:0322b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其形如人但鼻極長。",
        "from": "T21n1273_001:0322b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即愛香塵故也。",
        "from": "T21n1273_001:0322b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯今大聖天。",
        "from": "T21n1273_001:0322b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其頭眼耳鼻舌諸相皆似象。",
        "from": "T21n1273_001:0322b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能隨行者故也。",
        "from": "T21n1273_001:0322b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此天者即誐那鉢底。",
        "from": "T21n1273_001:0322b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云歡喜。",
        "from": "T21n1273_001:0322b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非餘毘那夜迦也。",
        "from": "T21n1273_001:0322b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以慈善根力。",
        "from": "T21n1273_001:0322b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸毘那夜迦生歡喜心。",
        "from": "T21n1273_001:0322b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後呵責令不作障。",
        "from": "T21n1273_001:0322b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若瞋怒時即以其鼻。",
        "from": "T21n1273_001:0322b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若近若遠隨意纏縛。",
        "from": "T21n1273_001:0322b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故勝餘毘那夜迦也。",
        "from": "T21n1273_001:0322b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦權實之義。",
        "from": "T21n1273_001:0322b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既說已　次說手印相。",
        "from": "T21n1273_001:0322b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手外縛。",
        "from": "T21n1273_001:0322b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指如寶形。",
        "from": "T21n1273_001:0322b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是契相用前大真言又二手內縛。",
        "from": "T21n1273_001:0322b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右中指頭指合竪立。",
        "from": "T21n1273_001:0322b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交於左中指頭指。",
        "from": "T21n1273_001:0322b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是二指如右相合竪立。",
        "from": "T21n1273_001:0322b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即左右頭指各輔中指背。",
        "from": "T21n1273_001:0322b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大指並立。",
        "from": "T21n1273_001:0322b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是契用前第二真言　又準前印。",
        "from": "T21n1273_001:0322b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改左右小指無名指為外縛。",
        "from": "T21n1273_001:0322b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是契用前第三呪　次說像法。",
        "from": "T21n1273_001:0322b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象頭人身。",
        "from": "T21n1273_001:0322b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左牙出右牙折。",
        "from": "T21n1273_001:0322b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面少向左。",
        "from": "T21n1273_001:0322b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其鼻向外瘻。",
        "from": "T21n1273_001:0322b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身色赤黃有六臂。",
        "from": "T21n1273_001:0322b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左上手把刀金剛智言把劍次手把菓盤金剛智言歡喜團下手把輪。",
        "from": "T21n1273_001:0322b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右上手把捧。",
        "from": "T21n1273_001:0322b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次手把索。",
        "from": "T21n1273_001:0322b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下手把牙。",
        "from": "T21n1273_001:0322b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此像前誦前大真言。",
        "from": "T21n1273_001:0322b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求皆成　又像有二天身相抱正立雙象頭人身。",
        "from": "T21n1273_001:0322b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其左天著天華冠。",
        "from": "T21n1273_001:0322b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻牙短。",
        "from": "T21n1273_001:0322b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其目亦細著赤袈裟福田相衣。",
        "from": "T21n1273_001:0322b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身白肉色。",
        "from": "T21n1273_001:0322b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右天面目不慈。",
        "from": "T21n1273_001:0322b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻長目廣。",
        "from": "T21n1273_001:0322b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不著天冠及福田衣。",
        "from": "T21n1273_001:0322b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身赤黃色。",
        "from": "T21n1273_001:0322b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯以黑色衣而纏其頸肩。",
        "from": "T21n1273_001:0322b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此天以面相著前女天面。",
        "from": "T21n1273_001:0322b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作愛惜相。",
        "from": "T21n1273_001:0322b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是像顯權實相。",
        "from": "T21n1273_001:0322b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此像前持誦先第二真言善增惡滅　又像二形如先。",
        "from": "T21n1273_001:0322b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相抱正立。",
        "from": "T21n1273_001:0322b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯以男天面繫女天之右肩。",
        "from": "T21n1273_001:0322c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而視女天背。",
        "from": "T21n1273_001:0322c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以女天面繫男天之右肩。",
        "from": "T21n1273_001:0322c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而視男天背也。",
        "from": "T21n1273_001:0322c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目細牙短為婦天。",
        "from": "T21n1273_001:0322c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其二天並不著法衣天冠。",
        "from": "T21n1273_001:0322c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現本毘那夜迦身。",
        "from": "T21n1273_001:0322c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此像前持誦先第三真言。",
        "from": "T21n1273_001:0322c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡事皆悉消滅也。",
        "from": "T21n1273_001:0322c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誐那鉢底王真言要義印契畫像法。",
        "from": "T21n1273_001:0322c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說已　將修此法時。",
        "from": "T21n1273_001:0322c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應敬禮大毘盧遮那。",
        "from": "T21n1273_001:0322c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮觀世音。",
        "from": "T21n1273_001:0322c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後禮軍荼利即得効驗。",
        "from": "T21n1273_001:0322c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照與觀音是其本尊身。",
        "from": "T21n1273_001:0322c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軍荼利是其調伏者。",
        "from": "T21n1273_001:0322c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以先歸敬也。",
        "from": "T21n1273_001:0322c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大廣智言。",
        "from": "T21n1273_001:0322c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有毘那夜迦障難者。",
        "from": "T21n1273_001:0322c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應修真言法。",
        "from": "T21n1273_001:0322c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其真言法中有三部。",
        "from": "T21n1273_001:0322c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三部即三尊。",
        "from": "T21n1273_001:0322c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三尊即佛菩薩金剛。",
        "from": "T21n1273_001:0322c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛菩薩金剛即毘盧遮那觀世音軍荼利。",
        "from": "T21n1273_001:0322c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是三部法。",
        "from": "T21n1273_001:0322c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能制三業懈怠。",
        "from": "T21n1273_001:0322c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除其懈怠故。",
        "from": "T21n1273_001:0322c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "障難永絕不起。",
        "from": "T21n1273_001:0322c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故欲修誐那鉢底法者。",
        "from": "T21n1273_001:0322c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應敬禮毘盧遮那觀世音軍荼利。",
        "from": "T21n1273_001:0322c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是三部尊。",
        "from": "T21n1273_001:0322c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除行者身口意懈怠故。",
        "from": "T21n1273_001:0322c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現此毘那夜迦身也。",
        "from": "T21n1273_001:0322c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非餘障者。",
        "from": "T21n1273_001:0322c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯號誐那鉢底也。",
        "from": "T21n1273_001:0322c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那五字真言曰。",
        "from": "T21n1273_001:0322c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿尾羅吽劍觀世音十一面毘俱胝諸佛所說真言種種梵號可見經中不空譯。",
        "from": "T21n1273_001:0322c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵娜羅娜羅地哩地哩度嚕度嚕壹知陟奚反嚩知者隷者隷鉢羅者隷鉢羅者隷矩蘇銘矩蘇摩縛隷壹里弭里止里止里致惹引羅摩跛曩也跛羅摩󰡊馱薩怛嚩摩訶迦嚕尼迦引娑婆訶軍荼利菩薩除障難真言曰。",
        "from": "T21n1273_001:0322c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨囉怛曩二合怛羅二合夜引野曩莫室戰二合拏嚩日羅二合鉢拏曳摩訶藥乞叉二合細曩鉢多曳曩謨嚩日羅句嚕馱野唵呼嚕呼嚕地瑟吒地瑟吒盤多盤多地訶曩地訶曩阿蜜㗚二合帝吽發吒如上微妙祕義。",
        "from": "T21n1273_001:0323a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末代智者應以祕之。",
        "from": "T21n1273_001:0323a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應安梵夾中。",
        "from": "T21n1273_001:0323a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於非器人勿妄傳授放。",
        "from": "T21n1273_001:0323a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂非器。",
        "from": "T21n1273_001:0323a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂無智與不信。",
        "from": "T21n1273_001:0323a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及惡人不守口人等。",
        "from": "T21n1273_001:0323a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是非器人也。",
        "from": "T21n1273_001:0323a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於是等人前恣宣傳者。",
        "from": "T21n1273_001:0323a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐有誹謗之罪。",
        "from": "T21n1273_001:0323a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故不撰器人者即有障難。",
        "from": "T21n1273_001:0323a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以今更加制言也。",
        "from": "T21n1273_001:0323a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者修之速得悉地。",
        "from": "T21n1273_001:0323a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誐那鉢底瑜迦祕要一帖一渧酒成萬斛呪􈁴􄙺􄗭􄕻􄗷􆿁􅁥􄚩大自在天呪曰　聖天儀軌文。",
        "from": "T21n1273_001:0323a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　　　　　　　淨　嚴",
        "from": "T21n1273_001:0323a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　　　　　豐山快道誌",
        "from": "T21n1273_001:0323a22_0",
        "context_with_next_sentence": true
    }
]