[
    {
        "source_sentence": "佛說十二佛名神呪校量功德除",
        "from": "T21n1348_001:0860c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "障滅罪經",
        "from": "T21n1348_001:0860c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋天竺三藏法師闍那崛多譯",
        "from": "T21n1348_001:0860c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1348_001:0860c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時婆伽婆。",
        "from": "T21n1348_001:0860c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住王舍城耆闍崛山中。",
        "from": "T21n1348_001:0860c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾千二百五十人俱。",
        "from": "T21n1348_001:0860c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有菩薩大眾一萬二千人俱。",
        "from": "T21n1348_001:0860c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿逸多菩薩為首。",
        "from": "T21n1348_001:0860c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告彌勒菩薩言。",
        "from": "T21n1348_001:0860c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒東方去此佛剎有十不可說諸佛剎億百千微塵等。",
        "from": "T21n1348_001:0860c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過諸佛剎有一佛土。",
        "from": "T21n1348_001:0860c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰解脫主世界。",
        "from": "T21n1348_001:0860c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼世界內有一佛。",
        "from": "T21n1348_001:0860c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰虛空功德清淨微塵等目端正功德相光明華波頭摩琉璃光寶體香最上香供養訖種種莊嚴頂髻無量無邊日月光明願力莊嚴變化莊嚴法界出生無障礙王如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在隨心欲行逍遙在處說法。",
        "from": "T21n1348_001:0861a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T21n1348_001:0861a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯四重五逆誹謗三寶。",
        "from": "T21n1348_001:0861a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及犯四波羅夷。",
        "from": "T21n1348_001:0861a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人罪重假使如閻浮履地變為微塵。",
        "from": "T21n1348_001:0861a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一微塵成於一劫。",
        "from": "T21n1348_001:0861a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人有若干劫罪。",
        "from": "T21n1348_001:0861a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱是一佛名號禮一拜者。",
        "from": "T21n1348_001:0861a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得滅除。",
        "from": "T21n1348_001:0861a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復晝夜受持讀誦憶念不忘者。",
        "from": "T21n1348_001:0861a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人功德不可思議而彼佛世界中有菩薩名無比。",
        "from": "T21n1348_001:0861a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無障礙王如來授彼菩薩記。",
        "from": "T21n1348_001:0861a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得成佛。",
        "from": "T21n1348_001:0861a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號豪相日月光明華寶蓮華堅如金剛身毘盧遮那無障礙眼圓滿十方放光照一切佛剎相王如來阿羅訶三藐三佛陀善逝世間解無上士調御丈夫天人師佛世尊。",
        "from": "T21n1348_001:0861a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼東方復有佛。",
        "from": "T21n1348_001:0861a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰一切莊嚴無垢光如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方有佛。",
        "from": "T21n1348_001:0861a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰辯才瓔珞思念如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方有佛。",
        "from": "T21n1348_001:0861a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰無垢月相王名稱如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方有佛。",
        "from": "T21n1348_001:0861a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰華莊嚴作光明如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東南方有佛。",
        "from": "T21n1348_001:0861a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰作燈明如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西南方有佛。",
        "from": "T21n1348_001:0861b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰寶上相名稱如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西北方有佛。",
        "from": "T21n1348_001:0861b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰無畏觀如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東北方有佛。",
        "from": "T21n1348_001:0861b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰無畏無怯毛孔不竪名稱如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下方有佛。",
        "from": "T21n1348_001:0861b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰師子奮迅根如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上方有佛。",
        "from": "T21n1348_001:0861b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰金光威王相似如來阿羅訶三藐三佛陀。",
        "from": "T21n1348_001:0861b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應當稱彼佛名亦修恭敬。",
        "from": "T21n1348_001:0861b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須稱其名號。",
        "from": "T21n1348_001:0861b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須心念彼佛名號。",
        "from": "T21n1348_001:0861b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告彌勒。",
        "from": "T21n1348_001:0861b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有正信善男子正信善女人。",
        "from": "T21n1348_001:0861b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱此十二諸佛名號之時。",
        "from": "T21n1348_001:0861b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經於十日當修懺悔一切諸罪。",
        "from": "T21n1348_001:0861b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生所有功德皆隨喜勸請。",
        "from": "T21n1348_001:0861b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛久住於世。",
        "from": "T21n1348_001:0861b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸善根迴向法界。",
        "from": "T21n1348_001:0861b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時即得滅一切諸罪。",
        "from": "T21n1348_001:0861b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得淨一切業障。",
        "from": "T21n1348_001:0861b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得具足成就莊嚴一切佛土。",
        "from": "T21n1348_001:0861b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就具足無畏。",
        "from": "T21n1348_001:0861b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得具足莊嚴身相。",
        "from": "T21n1348_001:0861b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得具足菩薩眷屬圍遶。",
        "from": "T21n1348_001:0861b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得具足無量陀羅尼。",
        "from": "T21n1348_001:0861b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得具足無量三昧。",
        "from": "T21n1348_001:0861b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得具足如意佛剎莊嚴。",
        "from": "T21n1348_001:0861b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得具足無量善知識。",
        "from": "T21n1348_001:0861b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速得成就如上所說不增不減。",
        "from": "T21n1348_001:0861b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於煩惱中行阿耨多羅三藐三菩提。",
        "from": "T21n1348_001:0861b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得端正可憙果報。",
        "from": "T21n1348_001:0861b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得財寶充足。",
        "from": "T21n1348_001:0861b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常生大姓豪族種姓之家。",
        "from": "T21n1348_001:0861b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身相具足亦得善和眷屬圍遶。",
        "from": "T21n1348_001:0861b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊重宣此義而說偈言。",
        "from": "T21n1348_001:0861c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子　　若善女人等",
        "from": "T21n1348_001:0861c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此佛名　　生生世世中",
        "from": "T21n1348_001:0861c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得他人愛敬　　光明威力大",
        "from": "T21n1348_001:0861c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生處為人尊　　於後得成佛",
        "from": "T21n1348_001:0861c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛復告彌勒。",
        "from": "T21n1348_001:0861c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1348_001:0861c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若當受持此佛名者。",
        "from": "T21n1348_001:0861c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須誦此陀羅尼呪。",
        "from": "T21n1348_001:0861c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多絰他一阿企二摩企三三曼多目企四燥帝育羯帝五尼陸帝六尼陸帝鉢脾七三摩余祇八質多毘跋帝九阿企十摩企十一摩陀禰十二毘拔帝十三三漫多求禰十四薩底耶羅彌十五育吉帝十六鉢育吉帝十七醯利彌利摩私隷十八阿喃迷十九遮迷二十頞質智二十一末質智二十二步支二十三阿羅醯二十四婆休眵二十五遮逾伽羅醯二十六醯摩婆帝二十七殊帝摩帝二十八達摩真帝二十九周多朋枳三十阿毘差脾三十一阿羅陀婆叉彌三十二娑揵陀毘拔帝三十三那摩薩婆三十四佛陀菩提薩多脾毘耶三十五悉田妒漫帶波陀三十六佛陀提瑟帝多三十七爾時世尊說是呪已重說偈言。",
        "from": "T21n1348_001:0861c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此呪者　　得值六十億",
        "from": "T21n1348_001:0861c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在十方佛　　常憶念是人",
        "from": "T21n1348_001:0861c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切受生處　　常遇善知識",
        "from": "T21n1348_001:0861c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心欲所願者　　一切皆吉祥",
        "from": "T21n1348_001:0861c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此陀羅尼　　常生諸佛前",
        "from": "T21n1348_001:0861c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微妙蓮華上　　化生不受胎",
        "from": "T21n1348_001:0861c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念正行意　　增長智慧等",
        "from": "T21n1348_001:0861c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一聞悉總持　　所聞不忘失",
        "from": "T21n1348_001:0861c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此呪者　　獲得如是福",
        "from": "T21n1348_001:0861c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此佛名者　　彼人所生處",
        "from": "T21n1348_001:0862a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離諸惡道　　速得生善處",
        "from": "T21n1348_001:0862a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得陀羅尼定　　最妙最勝處",
        "from": "T21n1348_001:0862a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持不忘失　　乃至於菩提",
        "from": "T21n1348_001:0862a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由諸佛名　　及以陀羅尼",
        "from": "T21n1348_001:0862a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人施七寶　　滿千萬億剎",
        "from": "T21n1348_001:0862a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此佛名　　福報過於彼",
        "from": "T21n1348_001:0862a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行於菩提行　　恒常識宿命",
        "from": "T21n1348_001:0862a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離諸眾難　　即得自在處",
        "from": "T21n1348_001:0862a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常生有佛剎　　值佛聞正法",
        "from": "T21n1348_001:0862a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得於信行心　　得是信心已",
        "from": "T21n1348_001:0862a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常即供養佛　　值佛聞法已",
        "from": "T21n1348_001:0862a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生大歡喜　　得見諸佛已",
        "from": "T21n1348_001:0862a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持妙供養具　　供養於諸佛",
        "from": "T21n1348_001:0862a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持佛名者　　千萬諸億劫",
        "from": "T21n1348_001:0862a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨離生死罪　　速成於佛道",
        "from": "T21n1348_001:0862a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人能至心　　七日誦佛名",
        "from": "T21n1348_001:0862a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得於清淨眼　　能見無量佛",
        "from": "T21n1348_001:0862a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能持此佛名　　即得無量福",
        "from": "T21n1348_001:0862a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所生處　　天人常恭敬",
        "from": "T21n1348_001:0862a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持佛名　　千萬億劫中",
        "from": "T21n1348_001:0862a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被他毀辱　　一切世界中",
        "from": "T21n1348_001:0862a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名聞悉流布　　若人持佛名",
        "from": "T21n1348_001:0862a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千萬億劫中　　天人常供養",
        "from": "T21n1348_001:0862a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有毀之者　　速得成佛道",
        "from": "T21n1348_001:0862a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持佛名　　不生怯弱心",
        "from": "T21n1348_001:0862a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧無諂曲　　常在諸佛前",
        "from": "T21n1348_001:0862a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持佛名　　彼人所生處",
        "from": "T21n1348_001:0862a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍諸夜叉　　乾闥緊那羅",
        "from": "T21n1348_001:0862a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修羅迦樓羅　　及摩睺羅伽",
        "from": "T21n1348_001:0862a30_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人與非人等　　常供養是人",
        "from": "T21n1348_001:0862b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持佛名　　世世所生處",
        "from": "T21n1348_001:0862b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常生富貴家　　丈夫相具足",
        "from": "T21n1348_001:0862b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有慳妬心　　猛健好布施",
        "from": "T21n1348_001:0862b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身體諸毛孔　　常出諸妙香",
        "from": "T21n1348_001:0862b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口中諸齒間　　復出氛氳香",
        "from": "T21n1348_001:0862b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天赤栴檀香　　及諸餘香氣",
        "from": "T21n1348_001:0862b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千萬億劫中　　常香無斷絕",
        "from": "T21n1348_001:0862b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世世所生處　　其聲如梵天",
        "from": "T21n1348_001:0862b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如迦陵頻　　命命等諸鳥",
        "from": "T21n1348_001:0862b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持法王名者　　其福亦如是",
        "from": "T21n1348_001:0862b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持佛名　　七寶華中生",
        "from": "T21n1348_001:0862b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其華千億葉　　威光相具足",
        "from": "T21n1348_001:0862b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持佛名　　父母諸眷屬",
        "from": "T21n1348_001:0862b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和顏無諍訟　　永不生別離",
        "from": "T21n1348_001:0862b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有諸女人　　受持此經者",
        "from": "T21n1348_001:0862b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨離女人形　　轉生智男身",
        "from": "T21n1348_001:0862b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得男子身已　　即成於菩提",
        "from": "T21n1348_001:0862b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉無上法輪　　隨意入涅槃",
        "from": "T21n1348_001:0862b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持佛名　　刀杖不能害",
        "from": "T21n1348_001:0862b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水火不焚漂　　縣官不能殺",
        "from": "T21n1348_001:0862b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持佛名　　眾魔及波旬",
        "from": "T21n1348_001:0862b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行住坐臥處　　不能得其便",
        "from": "T21n1348_001:0862b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持佛名　　世世所生處",
        "from": "T21n1348_001:0862b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身通遊虛空　　能至無邊剎",
        "from": "T21n1348_001:0862b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面覩於諸佛　　能問甚深義",
        "from": "T21n1348_001:0862b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等無量佛　　即知其心意",
        "from": "T21n1348_001:0862b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說微妙法　　授彼菩提記",
        "from": "T21n1348_001:0862b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞授記已　　心生大歡喜",
        "from": "T21n1348_001:0862b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於諸佛教　　決定無有疑",
        "from": "T21n1348_001:0862c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸佛世尊　　所說甚深法",
        "from": "T21n1348_001:0862c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人聞法已　　受持永不失",
        "from": "T21n1348_001:0862c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於後得成就　　六度及諸地",
        "from": "T21n1348_001:0862c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏諸力等　　眾相及諸好",
        "from": "T21n1348_001:0862c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛剎及眾生　　任意隨所取",
        "from": "T21n1348_001:0862c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生於彼剎中　　速能成正覺",
        "from": "T21n1348_001:0862c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉無上法輪　　隨意入涅槃",
        "from": "T21n1348_001:0862c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子　　及善女人等",
        "from": "T21n1348_001:0862c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此經者　　如上說功德",
        "from": "T21n1348_001:0862c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若持此經者　　謹慎莫放逸",
        "from": "T21n1348_001:0862c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞如前福業　　若滿於一劫",
        "from": "T21n1348_001:0862c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若減於一劫　　常須勤讀誦",
        "from": "T21n1348_001:0862c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生懈怠心　　我勅有如是",
        "from": "T21n1348_001:0862c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等諸佛者　　常住功德藏",
        "from": "T21n1348_001:0862c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空雲中王　　常住於彼處",
        "from": "T21n1348_001:0862c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人聞佛名　　一劫減一劫",
        "from": "T21n1348_001:0862c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已生敬心　　彼是最健人",
        "from": "T21n1348_001:0862c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是大智慧　　亦是人中最",
        "from": "T21n1348_001:0862c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是健丈夫　　於世大名聞",
        "from": "T21n1348_001:0862c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我今言　　彌勒當聽我",
        "from": "T21n1348_001:0862c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大智慧人　　巧解方便者",
        "from": "T21n1348_001:0862c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常勤不放逸　　恒近善知識",
        "from": "T21n1348_001:0862c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞此經典　　後趣菩提道",
        "from": "T21n1348_001:0862c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此經已。",
        "from": "T21n1348_001:0862c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩摩訶薩。",
        "from": "T21n1348_001:0862c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸菩薩眾大比丘眾。",
        "from": "T21n1348_001:0862c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍夜叉乾闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T21n1348_001:0862c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說歡喜奉行。",
        "from": "T21n1348_001:0862c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說十二佛名神呪校量功德除障滅罪經",
        "from": "T21n1348_001:0862c29_100",
        "context_with_next_sentence": false
    }
]