{
    "X19n0347_007:0563b05_0": "維摩詰所說經卷七",
    "X19n0347_007:0563b06_0": "觀眾生品",
    "X19n0347_007:0563b07_0": "爾時文殊師利。",
    "X19n0347_007:0563b07_1": "問維摩詰言。",
    "X19n0347_007:0563b07_2": "菩薩云何觀於眾生。",
    "X19n0347_007:0563b08_3": "維摩詰言。",
    "X19n0347_007:0563b08_4": "譬如幻師見所幻人。",
    "X19n0347_007:0563b08_5": "菩薩觀眾生為若此。",
    "X19n0347_007:0563b09_6": "如智者見水中月。",
    "X19n0347_007:0563b09_7": "如鏡中見其面像。",
    "X19n0347_007:0563b09_8": "如熱時炎。",
    "X19n0347_007:0563b10_9": "如呼聲響。",
    "X19n0347_007:0563b10_10": "如空中雲。",
    "X19n0347_007:0563b10_11": "如水聚沫。",
    "X19n0347_007:0563b10_12": "如水上泡。",
    "X19n0347_007:0563b11_13": "如芭蕉堅。",
    "X19n0347_007:0563b11_14": "如電久住。",
    "X19n0347_007:0563b11_15": "如第五大。",
    "X19n0347_007:0563b11_16": "如第六陰。",
    "X19n0347_007:0563b11_17": "如第七情。",
    "X19n0347_007:0563b12_18": "如十三入。",
    "X19n0347_007:0563b12_19": "如十九界。",
    "X19n0347_007:0563b12_20": "菩薩觀眾生為若此。",
    "X19n0347_007:0563b13_21": "如無色界色。",
    "X19n0347_007:0563b13_22": "如燋穀芽。",
    "X19n0347_007:0563b13_23": "如須陀洹身見。",
    "X19n0347_007:0563b13_24": "如阿那含入胎。",
    "X19n0347_007:0563b14_25": "如阿羅漢三毒。",
    "X19n0347_007:0563b14_26": "如得忍菩薩貪恚毀禁。",
    "X19n0347_007:0563b15_27": "如佛煩惱習。",
    "X19n0347_007:0563b15_28": "如盲者見色。",
    "X19n0347_007:0563b15_29": "如入滅盡定出入息。",
    "X19n0347_007:0563b16_30": "如空中鳥跡。",
    "X19n0347_007:0563b16_31": "如石女兒。",
    "X19n0347_007:0563b16_32": "如化人煩惱。",
    "X19n0347_007:0563b16_33": "如夢所見己寤。",
    "X19n0347_007:0563b17_34": "如滅度者受身。",
    "X19n0347_007:0563b17_35": "如無烟之火。",
    "X19n0347_007:0563b17_36": "菩薩觀眾生為若此。",
    "X19n0347_007:0563b18_37": "文殊師利言。",
    "X19n0347_007:0563b18_38": "若菩薩作是觀者。",
    "X19n0347_007:0563b18_39": "云何行慈。",
    "X19n0347_007:0563b19_40": "維摩詰言。",
    "X19n0347_007:0563b19_41": "菩薩作是觀已。",
    "X19n0347_007:0563b19_42": "自念。",
    "X19n0347_007:0563b19_43": "我當為眾生。",
    "X19n0347_007:0563b20_44": "說如斯法。",
    "X19n0347_007:0563b20_45": "是即真實慈也。",
    "X19n0347_007:0563b20_46": "行寂滅慈。",
    "X19n0347_007:0563b20_47": "無所生故。",
    "X19n0347_007:0563b21_48": "行不熱慈。",
    "X19n0347_007:0563b21_49": "無煩惱故。",
    "X19n0347_007:0563b21_50": "行等之慈。",
    "X19n0347_007:0563b21_51": "等三世故。",
    "X19n0347_007:0563b21_52": "行無諍慈。",
    "X19n0347_007:0563b22_53": "無所起故。",
    "X19n0347_007:0563b22_54": "行不二慈。",
    "X19n0347_007:0563b22_55": "內外不合故。",
    "X19n0347_007:0563b22_56": "行不壞慈。",
    "X19n0347_007:0563b23_57": "畢竟盡故。",
    "X19n0347_007:0563b23_58": "行堅固慈。",
    "X19n0347_007:0563b23_59": "心無毀故。",
    "X19n0347_007:0563b23_60": "行清淨慈。",
    "X19n0347_007:0563b24_0": "諸法性淨故。",
    "X19n0347_007:0563b24_1": "行無邊慈。",
    "X19n0347_007:0563b24_2": "如虗空故。",
    "X19n0347_007:0563b24_3": "行阿羅漢慈。",
    "X19n0347_007:0563c01_0": "破結賊故行菩薩慈。",
    "X19n0347_007:0563c01_1": "安眾生故。",
    "X19n0347_007:0563c01_2": "行如來慈。",
    "X19n0347_007:0563c01_3": "得如相故。",
    "X19n0347_007:0563c02_4": "行佛(自覺覺彼稱佛)之慈。",
    "X19n0347_007:0563c02_5": "覺眾生故。",
    "X19n0347_007:0563c02_6": "行自然慈。",
    "X19n0347_007:0563c02_7": "無因得故。",
    "X19n0347_007:0563c03_0": "行菩提慈。",
    "X19n0347_007:0563c03_1": "等一味(平等無相也)故。",
    "X19n0347_007:0563c03_2": "行無等慈。",
    "X19n0347_007:0563c03_3": "斷諸愛故。",
    "X19n0347_007:0563c03_4": "行大悲慈。",
    "X19n0347_007:0563c04_5": "導以大乘故。",
    "X19n0347_007:0563c04_6": "行無厭慈。",
    "X19n0347_007:0563c04_7": "觀空無我故。",
    "X19n0347_007:0563c04_8": "行法施慈。",
    "X19n0347_007:0563c05_9": "無遺惜故。",
    "X19n0347_007:0563c05_10": "行持戒慈。",
    "X19n0347_007:0563c05_11": "化毀禁故。",
    "X19n0347_007:0563c05_12": "行忍辱慈。",
    "X19n0347_007:0563c06_0": "護彼我故。",
    "X19n0347_007:0563c06_1": "行精進慈。",
    "X19n0347_007:0563c06_2": "荷負眾生故。",
    "X19n0347_007:0563c06_3": "行禪定慈。",
    "X19n0347_007:0563c06_4": "不受味(五欲味)故。",
    "X19n0347_007:0563c07_5": "行智慧慈。",
    "X19n0347_007:0563c07_6": "無不知時故。",
    "X19n0347_007:0563c07_7": "行方便慈。",
    "X19n0347_007:0563c07_8": "一切示現故。",
    "X19n0347_007:0563c08_9": "行無隱慈。",
    "X19n0347_007:0563c08_10": "直心清淨故。",
    "X19n0347_007:0563c08_11": "行深心慈。",
    "X19n0347_007:0563c08_12": "無雜行故。",
    "X19n0347_007:0563c09_13": "行無誑慈。",
    "X19n0347_007:0563c09_14": "不虗假故。",
    "X19n0347_007:0563c09_15": "行安樂慈。",
    "X19n0347_007:0563c09_16": "令得佛樂故。",
    "X19n0347_007:0563c10_17": "菩薩之慈。",
    "X19n0347_007:0563c10_18": "為若此也。",
    "X19n0347_007:0563c10_19": "文殊師利。",
    "X19n0347_007:0563c10_20": "又問何謂為悲。",
    "X19n0347_007:0563c11_21": "答曰。",
    "X19n0347_007:0563c11_22": "菩薩所作功德。",
    "X19n0347_007:0563c11_23": "皆與一切眾生共之。",
    "X19n0347_007:0563c11_24": "何謂為喜。",
    "X19n0347_007:0563c12_25": "答曰。",
    "X19n0347_007:0563c12_26": "有所饒益。",
    "X19n0347_007:0563c12_27": "歡喜無悔。",
    "X19n0347_007:0563c12_28": "何謂為捨。",
    "X19n0347_007:0563c12_29": "答曰。",
    "X19n0347_007:0564a01_30": "所作福祐。",
    "X19n0347_007:0564a01_31": "無所希望。",
    "X19n0347_007:0564a01_32": "文殊師利又問。",
    "X19n0347_007:0564a01_33": "生死有畏。",
    "X19n0347_007:0564a02_34": "菩薩當何所依。",
    "X19n0347_007:0564a02_35": "維摩詰言。",
    "X19n0347_007:0564a02_36": "菩薩於生死畏中。",
    "X19n0347_007:0564a03_0": "當依如來功德之力。",
    "X19n0347_007:0564a03_1": "文殊師利又問。",
    "X19n0347_007:0564a03_2": "菩薩欲依如來功德之力。",
    "X19n0347_007:0564a04_3": "當於何住。",
    "X19n0347_007:0564a04_4": "答曰。",
    "X19n0347_007:0564a04_5": "菩薩欲依如來功德力者。",
    "X19n0347_007:0564a05_6": "當住度脫一切眾生。",
    "X19n0347_007:0564a05_7": "又問欲度眾生。",
    "X19n0347_007:0564a06_0": "當何所除。",
    "X19n0347_007:0564a06_1": "答曰欲度眾生。",
    "X19n0347_007:0564a06_2": "除其煩惱。",
    "X19n0347_007:0564a06_3": "又問欲除煩惱。",
    "X19n0347_007:0564a07_4": "當何所行。",
    "X19n0347_007:0564a07_5": "答曰當行正念。",
    "X19n0347_007:0564a07_6": "又問云何行於正念。",
    "X19n0347_007:0564a08_7": "答曰當行不生不滅。",
    "X19n0347_007:0564a08_8": "又問何法不生。",
    "X19n0347_007:0564a08_9": "何法不滅。",
    "X19n0347_007:0564a09_10": "答曰不善不生。",
    "X19n0347_007:0564a09_11": "善法不滅。",
    "X19n0347_007:0564a09_12": "又問善不善孰為本。",
    "X19n0347_007:0564a10_13": "答曰身為本。",
    "X19n0347_007:0564a10_14": "又問身孰為本。",
    "X19n0347_007:0564a10_15": "答曰欲貪為本。",
    "X19n0347_007:0564a11_16": "又問欲貪孰為本。",
    "X19n0347_007:0564a11_17": "答曰虗妄分別為本。",
    "X19n0347_007:0564a11_18": "又問虗妄分別孰為本。",
    "X19n0347_007:0564a12_19": "答曰顛倒想為本。",
    "X19n0347_007:0564a12_20": "又問顛倒想孰為本。",
    "X19n0347_007:0564a13_21": "答曰無住為本。",
    "X19n0347_007:0564a13_22": "又問無住孰為本。",
    "X19n0347_007:0564a13_23": "答曰無住則無本。",
    "X19n0347_007:0564a14_24": "文殊師利。",
    "X19n0347_007:0564a14_25": "從無住本。",
    "X19n0347_007:0564a14_26": "立一切法。",
    "X19n0347_007:0564a15_0": "時維摩詰室。",
    "X19n0347_007:0564a15_1": "有一天女。",
    "X19n0347_007:0564a15_2": "見諸天人。",
    "X19n0347_007:0564a15_3": "聞所說法。",
    "X19n0347_007:0564a15_4": "便現其身。",
    "X19n0347_007:0564a16_5": "即以天華。",
    "X19n0347_007:0564a16_6": "散諸菩薩大弟子上。",
    "X19n0347_007:0564a16_7": "華至諸菩薩。",
    "X19n0347_007:0564a17_8": "即皆墮落。",
    "X19n0347_007:0564a17_9": "至大弟子。",
    "X19n0347_007:0564a17_10": "便著不墮。",
    "X19n0347_007:0564a17_11": "一切弟子。",
    "X19n0347_007:0564a18_0": "神力去華。",
    "X19n0347_007:0564a18_1": "不能令去。",
    "X19n0347_007:0564a18_2": "爾時天問舍利弗。",
    "X19n0347_007:0564a18_3": "何故去華。",
    "X19n0347_007:0564a19_4": "答曰此華不如法。",
    "X19n0347_007:0564a19_5": "是以去之。",
    "X19n0347_007:0564a19_6": "天曰勿謂此華為不如法。",
    "X19n0347_007:0564a20_7": "所以者何。",
    "X19n0347_007:0564a20_8": "是華無所分別。",
    "X19n0347_007:0564a20_9": "仁者自生分別想耳。",
    "X19n0347_007:0564a21_10": "若於佛法出家。",
    "X19n0347_007:0564a21_11": "有所分別。",
    "X19n0347_007:0564a21_12": "為不如法。",
    "X19n0347_007:0564a22_0": "若無所分別。",
    "X19n0347_007:0564a22_1": "是則如法。",
    "X19n0347_007:0564a22_2": "觀諸菩薩。",
    "X19n0347_007:0564a22_3": "華不著者。",
    "X19n0347_007:0564a22_4": "已斷一切分別想故。",
    "X19n0347_007:0564a23_5": "譬如人畏時。",
    "X19n0347_007:0564a23_6": "非人得其便。",
    "X19n0347_007:0564a23_7": "如是弟子。",
    "X19n0347_007:0564a24_8": "畏生死故。",
    "X19n0347_007:0564a24_9": "色聲香味觸。",
    "X19n0347_007:0564a24_10": "得其便也。",
    "X19n0347_007:0564a24_11": "已離畏者。",
    "X19n0347_007:0564b01_12": "一切五欲。",
    "X19n0347_007:0564b01_13": "無能為也。",
    "X19n0347_007:0564b01_14": "結習未盡。",
    "X19n0347_007:0564b01_15": "華著身耳。",
    "X19n0347_007:0564b02_0": "結習盡者。",
    "X19n0347_007:0564b02_1": "華不著也。",
    "X19n0347_007:0564b02_2": "舍利弗言。",
    "X19n0347_007:0564b02_3": "天止此室。",
    "X19n0347_007:0564b02_4": "其已久如。",
    "X19n0347_007:0564b03_5": "答曰我止此室。",
    "X19n0347_007:0564b03_6": "如耆年解脫。",
    "X19n0347_007:0564b03_7": "舍利弗言。",
    "X19n0347_007:0564b03_8": "止此久耶。",
    "X19n0347_007:0564b04_9": "天曰。",
    "X19n0347_007:0564b04_10": "耆年解脫。",
    "X19n0347_007:0564b04_11": "亦何如久。",
    "X19n0347_007:0564b04_12": "舍利弗默然不答。",
    "X19n0347_007:0564b05_13": "天曰。",
    "X19n0347_007:0564b05_14": "如何耆舊大智而默。",
    "X19n0347_007:0564b05_15": "答曰解脫者。",
    "X19n0347_007:0564b05_16": "無所言說。",
    "X19n0347_007:0564b06_17": "故吾於是不知所云。",
    "X19n0347_007:0564b06_18": "天曰。",
    "X19n0347_007:0564b06_19": "言說文字。",
    "X19n0347_007:0564b06_20": "皆解脫相。",
    "X19n0347_007:0564b07_21": "所以者何。",
    "X19n0347_007:0564b07_22": "解脫者。",
    "X19n0347_007:0564b07_23": "不內不外。",
    "X19n0347_007:0564b07_24": "不在兩間。",
    "X19n0347_007:0564b08_0": "文字亦不內不外。",
    "X19n0347_007:0564b08_1": "不在兩間。",
    "X19n0347_007:0564b08_2": "是故舍利弗。",
    "X19n0347_007:0564b08_3": "無離文字說解脫也。",
    "X19n0347_007:0564b09_4": "所以者何。",
    "X19n0347_007:0564b09_5": "一切諸法。",
    "X19n0347_007:0564b09_6": "是解脫相。",
    "X19n0347_007:0564b10_0": "舍利弗言。",
    "X19n0347_007:0564b10_1": "不復以離婬怒癡為解脫乎。",
    "X19n0347_007:0564b10_2": "天曰。",
    "X19n0347_007:0564b10_3": "佛為增上慢人。",
    "X19n0347_007:0564b11_4": "說離婬怒癡為解脫耳。",
    "X19n0347_007:0564b11_5": "若無增上慢者。",
    "X19n0347_007:0564b12_6": "佛說婬怒癡性。",
    "X19n0347_007:0564b12_7": "即是解脫。",
    "X19n0347_007:0564b12_8": "舍利弗言。",
    "X19n0347_007:0564b12_9": "善哉善哉。",
    "X19n0347_007:0564b13_10": "天女。",
    "X19n0347_007:0564b13_11": "汝何所得。",
    "X19n0347_007:0564b13_12": "以何為證。",
    "X19n0347_007:0564b13_13": "辯乃如是。",
    "X19n0347_007:0564b13_14": "天曰我無得無證。",
    "X19n0347_007:0564b14_15": "故辯如是。",
    "X19n0347_007:0564b14_16": "所以者何。",
    "X19n0347_007:0564b14_17": "若有得有證者。",
    "X19n0347_007:0564b15_18": "則於佛法為增上慢。",
    "X19n0347_007:0564b15_19": "舍利弗問天。",
    "X19n0347_007:0564b15_20": "汝於三乘。",
    "X19n0347_007:0564b16_0": "為何志求。",
    "X19n0347_007:0564b16_1": "天曰。",
    "X19n0347_007:0564b16_2": "以聲聞法化眾生故。",
    "X19n0347_007:0564b16_3": "我為聲聞以因緣法。",
    "X19n0347_007:0564b17_4": "化眾生故。",
    "X19n0347_007:0564b17_5": "我為辟支佛。",
    "X19n0347_007:0564b17_6": "以大悲法化眾生故。",
    "X19n0347_007:0564b18_7": "我為大乘。",
    "X19n0347_007:0564b18_8": "舍利弗。",
    "X19n0347_007:0564b18_9": "如人入瞻蔔林。",
    "X19n0347_007:0564b18_10": "唯齅瞻蔔。",
    "X19n0347_007:0564b19_11": "不齅餘香。",
    "X19n0347_007:0564b19_12": "如是。",
    "X19n0347_007:0564b19_13": "若入此室。",
    "X19n0347_007:0564b19_14": "但聞佛功德之香。",
    "X19n0347_007:0564b20_15": "不樂聞聲聞辟支佛功德香也。",
    "X19n0347_007:0564b20_16": "舍利弗。",
    "X19n0347_007:0564b20_17": "其有釋梵四天王。",
    "X19n0347_007:0564b21_18": "諸天龍鬼神等。",
    "X19n0347_007:0564b21_19": "入此室者。",
    "X19n0347_007:0564b21_20": "聞斯上人講說正法。",
    "X19n0347_007:0564b22_21": "皆樂佛功德之香。",
    "X19n0347_007:0564b22_22": "發心而出。",
    "X19n0347_007:0564b22_23": "舍利弗。",
    "X19n0347_007:0564b23_24": "吾止此室。",
    "X19n0347_007:0564b23_25": "十有二年。",
    "X19n0347_007:0564b23_26": "初不聞說聲聞辟支佛法。",
    "X19n0347_007:0564b24_27": "但聞菩薩大慈大悲不可思議諸佛之法。",
    "X19n0347_007:0564b24_28": "舍利弗。",
    "X19n0347_007:0564c01_29": "此室常現八未曾有難得之法。",
    "X19n0347_007:0564c01_30": "何等為八。",
    "X19n0347_007:0564c02_0": "此室常以金色光照。",
    "X19n0347_007:0564c02_1": "晝夜無異。",
    "X19n0347_007:0564c02_2": "不以日月所照為明。",
    "X19n0347_007:0564c03_3": "是為一未曾有難得之法。",
    "X19n0347_007:0564c03_4": "此室入者。",
    "X19n0347_007:0564c03_5": "不為諸垢之所惱也。",
    "X19n0347_007:0564c04_6": "是為二未曾有難得之法。",
    "X19n0347_007:0564c04_7": "此室常有釋梵四天王他方菩薩。",
    "X19n0347_007:0564c05_8": "來會不絕。",
    "X19n0347_007:0564c05_9": "是為三未曾有難得之法。",
    "X19n0347_007:0564c06_10": "此室常說六波羅蜜不退轉法。",
    "X19n0347_007:0564c07_11": "是為四未曾有難得之法。",
    "X19n0347_007:0564c07_12": "此室常作天人第一之樂。",
    "X19n0347_007:0564c08_13": "絃出無量法化之聲。",
    "X19n0347_007:0564c08_14": "是為五未曾有難得之法。",
    "X19n0347_007:0564c09_15": "此室有四大藏。",
    "X19n0347_007:0564c09_16": "眾寶積滿。",
    "X19n0347_007:0564c09_17": "周窮濟乏。",
    "X19n0347_007:0564c09_18": "求得無盡。",
    "X19n0347_007:0564c10_19": "是為六未曾有難得之法。",
    "X19n0347_007:0564c10_20": "此室釋迦牟尼佛。",
    "X19n0347_007:0564c11_21": "阿彌陀佛。",
    "X19n0347_007:0564c11_22": "阿閦佛。",
    "X19n0347_007:0564c11_23": "寶德。",
    "X19n0347_007:0564c11_24": "寶燄。",
    "X19n0347_007:0564c11_25": "寶月。",
    "X19n0347_007:0564c11_26": "寶嚴。",
    "X19n0347_007:0564c11_27": "難勝。",
    "X19n0347_007:0564c12_28": "師子響。",
    "X19n0347_007:0564c12_29": "一切利成。",
    "X19n0347_007:0564c12_30": "如是等十方無量諸佛是。",
    "X19n0347_007:0564c13_0": "上人念時。",
    "X19n0347_007:0564c13_1": "即皆為來。",
    "X19n0347_007:0564c13_2": "廣說諸佛秘要法藏。",
    "X19n0347_007:0564c13_3": "說已還去。",
    "X19n0347_007:0564c14_4": "是為七未曾有難得之法。",
    "X19n0347_007:0564c14_5": "此室一切諸天嚴飾宮殿。",
    "X19n0347_007:0564c15_6": "諸佛淨土。",
    "X19n0347_007:0564c15_7": "皆於中現。",
    "X19n0347_007:0564c15_8": "是為八未曾有難得之法。",
    "X19n0347_007:0564c16_9": "舍利弗。",
    "X19n0347_007:0564c16_10": "此室常現八未曾有難得之法。",
    "X19n0347_007:0564c17_11": "誰有見斯不思議事。",
    "X19n0347_007:0564c17_12": "而復樂於聲聞法乎。",
    "X19n0347_007:0564c17_13": "舍利弗言。",
    "X19n0347_007:0564c18_14": "汝何以不轉女身。",
    "X19n0347_007:0564c18_15": "天曰。",
    "X19n0347_007:0564c18_16": "我從十二年來。",
    "X19n0347_007:0565a01_0": "求女人相。",
    "X19n0347_007:0565a01_1": "了不可得。",
    "X19n0347_007:0565a01_2": "當何所轉。",
    "X19n0347_007:0565a01_3": "譬如幻師化作幻女。",
    "X19n0347_007:0565a02_4": "若有人問。",
    "X19n0347_007:0565a02_5": "何以不轉女身。",
    "X19n0347_007:0565a02_6": "是人為正問不。",
    "X19n0347_007:0565a03_0": "舍利弗言不也。",
    "X19n0347_007:0565a03_1": "幻無定相。",
    "X19n0347_007:0565a03_2": "當何所轉。",
    "X19n0347_007:0565a03_3": "天曰一切諸法。",
    "X19n0347_007:0565a04_4": "亦復如是。",
    "X19n0347_007:0565a04_5": "無有定相。",
    "X19n0347_007:0565a04_6": "云何乃問不轉女身。",
    "X19n0347_007:0565a05_0": "即時天女。",
    "X19n0347_007:0565a05_1": "以神通力。",
    "X19n0347_007:0565a05_2": "變舍利弗。",
    "X19n0347_007:0565a05_3": "令如天女。",
    "X19n0347_007:0565a05_4": "天自化身。",
    "X19n0347_007:0565a06_5": "如舍利弗。",
    "X19n0347_007:0565a06_6": "而問言何以不轉女身。",
    "X19n0347_007:0565a06_7": "舍利弗以天女像而答言。",
    "X19n0347_007:0565a07_8": "我今不知何轉。",
    "X19n0347_007:0565a07_9": "而變為女身。",
    "X19n0347_007:0565a08_0": "天曰。",
    "X19n0347_007:0565a08_1": "舍利弗。",
    "X19n0347_007:0565a08_2": "若能轉此女身。",
    "X19n0347_007:0565a08_3": "則一切女人。",
    "X19n0347_007:0565a08_4": "亦當能轉。",
    "X19n0347_007:0565a09_5": "如舍利弗非女而現女身。",
    "X19n0347_007:0565a09_6": "一切女人亦復如是。",
    "X19n0347_007:0565a10_7": "雖現女身而非女也。",
    "X19n0347_007:0565a10_8": "是故佛說一切諸法非男非女。",
    "X19n0347_007:0565a11_9": "即時天女。",
    "X19n0347_007:0565a11_10": "還攝神力。",
    "X19n0347_007:0565a11_11": "舍利弗身。",
    "X19n0347_007:0565a11_12": "還復如故。",
    "X19n0347_007:0565a12_13": "天問舍利弗。",
    "X19n0347_007:0565a12_14": "女身色相。",
    "X19n0347_007:0565a12_15": "今何所在。",
    "X19n0347_007:0565a12_16": "舍利弗言。",
    "X19n0347_007:0565a13_17": "女身色相。",
    "X19n0347_007:0565a13_18": "無在無不在。",
    "X19n0347_007:0565a13_19": "天曰。",
    "X19n0347_007:0565a13_20": "一切諸法。",
    "X19n0347_007:0565a13_21": "亦復如是。",
    "X19n0347_007:0565a14_22": "無在無不在。",
    "X19n0347_007:0565a14_23": "夫無在無不在者。",
    "X19n0347_007:0565a14_24": "佛所說也。",
    "X19n0347_007:0565a15_0": "舍利弗問天。",
    "X19n0347_007:0565a15_1": "汝於此沒。",
    "X19n0347_007:0565a15_2": "當生何所。",
    "X19n0347_007:0565a15_3": "天曰。",
    "X19n0347_007:0565a15_4": "佛化所生。",
    "X19n0347_007:0565a16_5": "吾如彼生。",
    "X19n0347_007:0565a16_6": "曰佛化所生。",
    "X19n0347_007:0565a16_7": "非沒生也。",
    "X19n0347_007:0565a16_8": "天曰。",
    "X19n0347_007:0565a16_9": "眾生猶然。",
    "X19n0347_007:0565a17_10": "非沒生也。",
    "X19n0347_007:0565a17_11": "舍利弗問天。",
    "X19n0347_007:0565a17_12": "汝久如當得阿耨多羅三藐三菩提。",
    "X19n0347_007:0565a18_13": "天曰。",
    "X19n0347_007:0565a18_14": "如舍利弗還為凡夫。",
    "X19n0347_007:0565a18_15": "我乃當成阿耨多羅三藐三菩提。",
    "X19n0347_007:0565a19_16": "舍利弗言。",
    "X19n0347_007:0565a19_17": "我作凡夫。",
    "X19n0347_007:0565a20_18": "無有是處。",
    "X19n0347_007:0565a20_19": "天曰。",
    "X19n0347_007:0565a20_20": "我得阿耨多羅三藐三菩提。",
    "X19n0347_007:0565a21_21": "亦無是處。",
    "X19n0347_007:0565a21_22": "所以者何。",
    "X19n0347_007:0565a21_23": "菩提無住處。",
    "X19n0347_007:0565a21_24": "是故無有得者。",
    "X19n0347_007:0565a22_25": "舍利弗言。",
    "X19n0347_007:0565a22_26": "今諸佛得阿耨多羅三藐三菩提。",
    "X19n0347_007:0565a23_27": "已得當得。",
    "X19n0347_007:0565a23_28": "如恒河沙。",
    "X19n0347_007:0565a23_29": "皆謂何乎。",
    "X19n0347_007:0565a23_30": "天曰。",
    "X19n0347_007:0565a23_31": "皆以世俗文字數故說有三世。",
    "X19n0347_007:0565a24_32": "非謂菩提有去來今。",
    "X19n0347_007:0565a24_33": "天曰。",
    "X19n0347_007:0565b01_34": "舍利弗。",
    "X19n0347_007:0565b01_35": "汝得阿羅漢道耶。",
    "X19n0347_007:0565b01_36": "曰無所得故而得。",
    "X19n0347_007:0565b02_0": "天曰。",
    "X19n0347_007:0565b02_1": "諸佛菩薩亦復如是。",
    "X19n0347_007:0565b02_2": "無所得故而得。",
    "X19n0347_007:0565b02_3": "爾時維摩詰語舍利弗。",
    "X19n0347_007:0565b03_4": "是天女已曾供養九十二億諸佛。",
    "X19n0347_007:0565b04_5": "已能遊戲菩薩神通。",
    "X19n0347_007:0565b04_6": "所願具足。",
    "X19n0347_007:0565b04_7": "得無生忍。"
}