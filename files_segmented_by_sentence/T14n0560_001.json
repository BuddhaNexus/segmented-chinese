[
    {
        "source_sentence": "佛說老母女六英經",
        "from": "T14n0560_001:0912b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋天竺三藏求那跋陀羅譯",
        "from": "T14n0560_001:0912b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛為世尊，功德巍巍，愍念眾生，為之傷悲。",
        "from": "T14n0560_001:0912b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時與弟子、大士相追，止處樂音，廣有所開。",
        "from": "T14n0560_001:0912b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一母人，貧老傴僂，長跪問佛：",
        "from": "T14n0560_001:0912b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「五陰、六衰會合我身，悉為是誰？",
        "from": "T14n0560_001:0912b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來何所從？",
        "from": "T14n0560_001:0912b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去何所歸？",
        "from": "T14n0560_001:0912b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願世尊為我思惟！",
        "from": "T14n0560_001:0912b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T14n0560_001:0912b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉！",
        "from": "T14n0560_001:0912b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜識其幾。",
        "from": "T14n0560_001:0912b25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法因緣，識之者希。",
        "from": "T14n0560_001:0912b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如鑽火，兩木相揩。",
        "from": "T14n0560_001:0912b26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火不從鑽，亦不從燧。",
        "from": "T14n0560_001:0912b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火出其間，赫赫甚輝，還燒其木，木盡消微。",
        "from": "T14n0560_001:0912b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如搥鼓，其音哀摧。",
        "from": "T14n0560_001:0912b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲不從革，亦不從搥。",
        "from": "T14n0560_001:0912b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法如是，因緣相推。",
        "from": "T14n0560_001:0912b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如天雨，風雲、雷電合會作雨，不獨龍威。",
        "from": "T14n0560_001:0912c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法如是，文亦如是。",
        "from": "T14n0560_001:0912c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如畫師，調和彩色，因素加畫，無形不即，皆須緣合，非獨一力。",
        "from": "T14n0560_001:0912c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」母人聞經，歡喜傾側，即得法忍，身不疲極。",
        "from": "T14n0560_001:0912c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難啟陳：",
        "from": "T14n0560_001:0912c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此何母人？",
        "from": "T14n0560_001:0912c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問佛諸法生死所從，心開意解，即得道真？",
        "from": "T14n0560_001:0912c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛語阿難：",
        "from": "T14n0560_001:0912c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「聽我所言。",
        "from": "T14n0560_001:0912c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前過去佛，名曰拘樓秦。",
        "from": "T14n0560_001:0912c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時此母是我之親。",
        "from": "T14n0560_001:0912c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我行學道，戀閉我身，憂思不食一日之間。",
        "from": "T14n0560_001:0912c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣此恩愛，五百世貧。",
        "from": "T14n0560_001:0912c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今我得佛，萬福皆臻，眾生無量，清淨佛前。",
        "from": "T14n0560_001:0912c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過六十億劫當得作佛，號薩婆，國名多華，劫名禮禪。",
        "from": "T14n0560_001:0912c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時人衣食如忉利天，各壽一劫無有苦勤。",
        "from": "T14n0560_001:0912c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時母人、天、龍、夜叉聞佛說法，皆大歡喜。",
        "from": "T14n0560_001:0912c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬七千人皆得正真道意，禮佛而去。",
        "from": "T14n0560_001:0912c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說老母女六英經",
        "from": "T14n0560_001:0912c16_100",
        "context_with_next_sentence": false
    }
]