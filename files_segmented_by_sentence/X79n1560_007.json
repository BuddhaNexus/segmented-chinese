{
    "X79n1560_007:0505b18_0": "禪林僧寶傳卷第七",
    "X79n1560_007:0505b20_0": "宋明白庵居沙門　惠洪　撰",
    "X79n1560_007:0505b21_0": "天台韶國師",
    "X79n1560_007:0505b22_0": "天台國師名德韶。",
    "X79n1560_007:0505b22_1": "處州龍泉人。",
    "X79n1560_007:0505b22_2": "生陳氏。",
    "X79n1560_007:0505b22_3": "母葉。",
    "X79n1560_007:0505b22_4": "夢白光觸體。",
    "X79n1560_007:0505b23_5": "覺而娠。",
    "X79n1560_007:0505b23_6": "生而傑異。",
    "X79n1560_007:0505b23_7": "年十五。",
    "X79n1560_007:0505b23_8": "有梵僧見之。",
    "X79n1560_007:0505b23_9": "拊其背曰。",
    "X79n1560_007:0505b24_10": "汝當出家。",
    "X79n1560_007:0505b24_11": "塵中無置汝所也。",
    "X79n1560_007:0505b24_12": "乃往依龍歸寺剃髮。",
    "X79n1560_007:0505c01_0": "十八詣信州開元寺受滿分戒。",
    "X79n1560_007:0505c01_1": "後唐同光中。",
    "X79n1560_007:0505c01_2": "謁舒州投子庵主不契。",
    "X79n1560_007:0505c02_3": "造龍牙遯禪師問。",
    "X79n1560_007:0505c02_4": "雄雄之尊。",
    "X79n1560_007:0505c02_5": "因什麼親近不得。",
    "X79n1560_007:0505c03_6": "遯曰。",
    "X79n1560_007:0505c03_7": "如火與火。",
    "X79n1560_007:0505c03_8": "曰忽遇水來。",
    "X79n1560_007:0505c03_9": "又作麼生。",
    "X79n1560_007:0505c03_10": "遯曰。",
    "X79n1560_007:0505c04_11": "汝不會我語。",
    "X79n1560_007:0505c04_12": "又問。",
    "X79n1560_007:0505c04_13": "天不蓋。",
    "X79n1560_007:0505c04_14": "地不載。",
    "X79n1560_007:0505c04_15": "此理如何。",
    "X79n1560_007:0505c04_16": "遯曰。",
    "X79n1560_007:0505c05_0": "合如是。",
    "X79n1560_007:0505c05_1": "韶惘然。",
    "X79n1560_007:0505c05_2": "固要為說。",
    "X79n1560_007:0505c05_3": "遯曰。",
    "X79n1560_007:0505c05_4": "道者汝向後自會去。",
    "X79n1560_007:0505c06_0": "時疎山有矮師叔者。",
    "X79n1560_007:0505c06_1": "精峭號能齧鏃機。",
    "X79n1560_007:0505c06_2": "韶問。",
    "X79n1560_007:0505c06_3": "百帀千重是何人境界。",
    "X79n1560_007:0505c07_4": "矮曰。",
    "X79n1560_007:0505c07_5": "左搓芒繩縛鬼子。",
    "X79n1560_007:0505c07_6": "曰不落古今請師說。",
    "X79n1560_007:0505c08_7": "矮曰不說。",
    "X79n1560_007:0505c08_8": "曰為什麼不說。",
    "X79n1560_007:0505c08_9": "矮曰。",
    "X79n1560_007:0505c08_10": "箇中不辨有無。",
    "X79n1560_007:0505c09_11": "韶曰師今善說。",
    "X79n1560_007:0505c09_12": "矮駭之。",
    "X79n1560_007:0505c09_13": "久而辭去。",
    "X79n1560_007:0505c09_14": "所至少留。",
    "X79n1560_007:0505c09_15": "見知識五十四人。",
    "X79n1560_007:0505c10_16": "括磨搜剝。",
    "X79n1560_007:0505c10_17": "窮極隱秘。",
    "X79n1560_007:0505c10_18": "不知端倪。",
    "X79n1560_007:0505c10_19": "心志俱疲。",
    "X79n1560_007:0505c11_20": "至曹山。",
    "X79n1560_007:0505c11_21": "但隨眾而已。",
    "X79n1560_007:0505c11_22": "無所咨參。",
    "X79n1560_007:0505c11_23": "有僧問。",
    "X79n1560_007:0505c11_24": "法眼禪師曰。",
    "X79n1560_007:0505c12_25": "十二時中。",
    "X79n1560_007:0505c12_26": "如何得頓息萬緣去。",
    "X79n1560_007:0505c12_27": "法眼曰。",
    "X79n1560_007:0505c12_28": "空與汝為緣耶。",
    "X79n1560_007:0505c13_29": "色與汝為緣耶。",
    "X79n1560_007:0505c13_30": "言空為緣。",
    "X79n1560_007:0505c13_31": "則空本無緣。",
    "X79n1560_007:0505c13_32": "言色為緣則色心不二。",
    "X79n1560_007:0505c14_33": "日用果何物為汝緣乎。",
    "X79n1560_007:0505c14_34": "韶聞悚然異之。",
    "X79n1560_007:0505c15_35": "又有問者曰。",
    "X79n1560_007:0505c15_36": "如何是曹源一滴水。",
    "X79n1560_007:0505c15_37": "法眼曰。",
    "X79n1560_007:0505c15_38": "是曹源一滴水。",
    "X79n1560_007:0505c16_39": "於是韶大悟於座下。",
    "X79n1560_007:0505c16_40": "平生凝滯。",
    "X79n1560_007:0505c16_41": "渙若氷釋。",
    "X79n1560_007:0505c16_42": "感涕沾衣。",
    "X79n1560_007:0505c17_43": "法眼曰。",
    "X79n1560_007:0505c17_44": "汝當大宏吾宗。",
    "X79n1560_007:0505c17_45": "行矣。",
    "X79n1560_007:0505c17_46": "無自滯於是。",
    "X79n1560_007:0505c17_47": "游天台。",
    "X79n1560_007:0505c18_48": "觀智顗禪師遺蹤。",
    "X79n1560_007:0505c18_49": "如故居。",
    "X79n1560_007:0505c18_50": "睠然有終焉之心。",
    "X79n1560_007:0505c18_51": "初寓止白沙時。",
    "X79n1560_007:0505c19_52": "吳越忠懿王。",
    "X79n1560_007:0505c19_53": "以國子刺台州。",
    "X79n1560_007:0505c19_54": "雅聞韶名。",
    "X79n1560_007:0505c20_0": "遣使迎之。",
    "X79n1560_007:0505c20_1": "申弟子之禮。",
    "X79n1560_007:0505c20_2": "日夕問道。",
    "X79n1560_007:0505c20_3": "韶曰。",
    "X79n1560_007:0505c20_4": "他日為覇主。",
    "X79n1560_007:0505c21_0": "無忘佛恩。",
    "X79n1560_007:0505c21_1": "漢乾祐元年戊申。",
    "X79n1560_007:0505c21_2": "王嗣國位。",
    "X79n1560_007:0505c21_3": "遣使迎至尊。",
    "X79n1560_007:0505c22_0": "事之以為國師焉。",
    "X79n1560_007:0505c22_1": "韶說法簡而要。",
    "X79n1560_007:0505c22_2": "撥去枝葉。",
    "X79n1560_007:0505c22_3": "曰古聖方便。",
    "X79n1560_007:0505c23_4": "猶如河沙。",
    "X79n1560_007:0505c23_5": "六祖曰。",
    "X79n1560_007:0505c23_6": "非風幡動。",
    "X79n1560_007:0505c23_7": "仁者心動。",
    "X79n1560_007:0505c23_8": "是為無上心印。",
    "X79n1560_007:0505c24_9": "至妙法門。",
    "X79n1560_007:0505c24_10": "我輩稱祖師門下士。",
    "X79n1560_007:0505c24_11": "何以解之。",
    "X79n1560_007:0505c24_12": "若言風幡不動。",
    "X79n1560_007:0506a01_13": "汝心妄動。",
    "X79n1560_007:0506a01_14": "若言不撥風幡。",
    "X79n1560_007:0506a01_15": "就風幡處通取。",
    "X79n1560_007:0506a02_16": "若言風幡動處。",
    "X79n1560_007:0506a02_17": "是什麼。",
    "X79n1560_007:0506a02_18": "若言附物明心不須認物。",
    "X79n1560_007:0506a03_0": "若言色即是空。",
    "X79n1560_007:0506a03_1": "若言非風幡動。",
    "X79n1560_007:0506a03_2": "應須妙會。",
    "X79n1560_007:0506a03_3": "與祖師意旨了沒交涉。",
    "X79n1560_007:0506a04_4": "既非種種解會。",
    "X79n1560_007:0506a04_5": "合如何知悉。",
    "X79n1560_007:0506a04_6": "若真見去。",
    "X79n1560_007:0506a05_0": "何法門不明。",
    "X79n1560_007:0506a05_1": "雖百千諸佛方便。",
    "X79n1560_007:0506a05_2": "一時洞了。",
    "X79n1560_007:0506a05_3": "或問如何是古佛心。",
    "X79n1560_007:0506a06_4": "答曰此問不弱。",
    "X79n1560_007:0506a06_5": "又問亡僧遷化。",
    "X79n1560_007:0506a06_6": "向何處去。",
    "X79n1560_007:0506a07_0": "曰終不向汝道。",
    "X79n1560_007:0506a07_1": "曰為什麼不道。",
    "X79n1560_007:0506a07_2": "曰恐汝不會。",
    "X79n1560_007:0506a07_3": "問那吒太子。",
    "X79n1560_007:0506a08_4": "析肉還母。",
    "X79n1560_007:0506a08_5": "析骨還父。",
    "X79n1560_007:0506a08_6": "然後化生於蓮花之上。",
    "X79n1560_007:0506a08_7": "為父母說法。",
    "X79n1560_007:0506a09_8": "未審如何是太子身。",
    "X79n1560_007:0506a09_9": "曰大家見。",
    "X79n1560_007:0506a09_10": "上座問。",
    "X79n1560_007:0506a09_11": "故每曰。",
    "X79n1560_007:0506a10_12": "大凡言句。",
    "X79n1560_007:0506a10_13": "應須絕滲漏乃可。",
    "X79n1560_007:0506a10_14": "僧隨問。",
    "X79n1560_007:0506a10_15": "如何是絕滲漏句。",
    "X79n1560_007:0506a11_16": "曰汝口似鼻孔。",
    "X79n1560_007:0506a11_17": "又曰。",
    "X79n1560_007:0506a11_18": "眼中無色識。",
    "X79n1560_007:0506a11_19": "色中無眼識。",
    "X79n1560_007:0506a12_20": "眼識二俱空。",
    "X79n1560_007:0506a12_21": "何能令見色。",
    "X79n1560_007:0506a12_22": "是眼則不能自見其己體。",
    "X79n1560_007:0506a13_23": "若不能自見。",
    "X79n1560_007:0506a13_24": "云何見餘物。",
    "X79n1560_007:0506a13_25": "古聖方便。",
    "X79n1560_007:0506a13_26": "皆為說破。",
    "X79n1560_007:0506a13_27": "若於此明得寂靜法。",
    "X79n1560_007:0506a14_28": "不寂靜法也収盡。",
    "X79n1560_007:0506a14_29": "明得遠離法。",
    "X79n1560_007:0506a14_30": "不遠離法亦收盡。",
    "X79n1560_007:0506a15_31": "未來現在。",
    "X79n1560_007:0506a15_32": "亦無遺餘。",
    "X79n1560_007:0506a15_33": "名一法界。",
    "X79n1560_007:0506a15_34": "何有遮障。",
    "X79n1560_007:0506a16_35": "各自信取。",
    "X79n1560_007:0506a16_36": "僧義寂者。",
    "X79n1560_007:0506a16_37": "謂韶曰。",
    "X79n1560_007:0506a16_38": "智者之教。",
    "X79n1560_007:0506a16_39": "年祀寖遠。",
    "X79n1560_007:0506a17_40": "必多散失。",
    "X79n1560_007:0506a17_41": "唯新羅國有善本。",
    "X79n1560_007:0506a17_42": "願藉禪師慈力。",
    "X79n1560_007:0506a17_43": "致之使再開。",
    "X79n1560_007:0506a18_44": "東土人天眼目。",
    "X79n1560_007:0506a18_45": "於是韶以聞忠懿王。",
    "X79n1560_007:0506a18_46": "遣使航海。",
    "X79n1560_007:0506a19_47": "傳寫以還。",
    "X79n1560_007:0506a19_48": "而韶適與智者同姓。",
    "X79n1560_007:0506a19_49": "疑其後身也。",
    "X79n1560_007:0506a19_50": "開寶四年辛未。",
    "X79n1560_007:0506a20_51": "華頂西峯忽摧。",
    "X79n1560_007:0506a20_52": "聲震山谷。",
    "X79n1560_007:0506a20_53": "六月有星。",
    "X79n1560_007:0506a20_54": "隕于峯頂。",
    "X79n1560_007:0506a21_55": "林木皆白。",
    "X79n1560_007:0506a21_56": "二十八日集眾告別而化。",
    "X79n1560_007:0506a21_57": "閱世八十有二坐六十有五夏。",
    "X79n1560_007:0506a23_0": "贊曰。",
    "X79n1560_007:0506a23_1": "聞僧問法眼。",
    "X79n1560_007:0506a23_2": "如何是曹源一滴水。",
    "X79n1560_007:0506a23_3": "而法眼但曰。",
    "X79n1560_007:0506a24_0": "是曹源一滴水。",
    "X79n1560_007:0506a24_1": "韶乃開悟。",
    "X79n1560_007:0506a24_2": "夫問詞答語。",
    "X79n1560_007:0506a24_3": "無所增損。",
    "X79n1560_007:0506a24_4": "所謂悟者。",
    "X79n1560_007:0506b01_5": "何自而發之。",
    "X79n1560_007:0506b01_6": "及觀韶所對問者。",
    "X79n1560_007:0506b01_7": "如問古佛心。",
    "X79n1560_007:0506b02_0": "對曰此問不弱。",
    "X79n1560_007:0506b02_1": "如問如何是太子身。",
    "X79n1560_007:0506b02_2": "對曰大家見上座問。",
    "X79n1560_007:0506b03_3": "則問答之間。",
    "X79n1560_007:0506b03_4": "不令意根椿立。",
    "X79n1560_007:0506b03_5": "蓋甞曰。",
    "X79n1560_007:0506b03_6": "大凡言句。",
    "X79n1560_007:0506b04_0": "須絕滲漏。",
    "X79n1560_007:0506b04_1": "而學者方爭趨微妙之域。",
    "X79n1560_007:0506b04_2": "欲見祖師之心。",
    "X79n1560_007:0506b05_0": "譬如趨越而首燕也歟。",
    "X79n1560_007:0506b06_0": "筠州九峯玄禪師",
    "X79n1560_007:0506b07_0": "禪師名通玄。",
    "X79n1560_007:0506b07_1": "生程氏。",
    "X79n1560_007:0506b07_2": "其先郢州長壽人也。",
    "X79n1560_007:0506b07_3": "幼依郢之仁王寺沙門惠超。",
    "X79n1560_007:0506b08_4": "超陰察之。",
    "X79n1560_007:0506b08_5": "外純深。",
    "X79n1560_007:0506b08_6": "中頴悟。",
    "X79n1560_007:0506b08_7": "超奇之。",
    "X79n1560_007:0506b09_0": "為落髮受具。",
    "X79n1560_007:0506b09_1": "即游洛中。",
    "X79n1560_007:0506b09_2": "聽毗尼部。",
    "X79n1560_007:0506b09_3": "棄去至武陵。",
    "X79n1560_007:0506b09_4": "謁德山鑒禪師。",
    "X79n1560_007:0506b10_5": "鑒時已臘高。",
    "X79n1560_007:0506b10_6": "門風益峻。",
    "X79n1560_007:0506b10_7": "門下未有遘之者。",
    "X79n1560_007:0506b11_0": "而鑒獨以玄為奇。",
    "X79n1560_007:0506b11_1": "然玄不大徹透。",
    "X79n1560_007:0506b11_2": "辭去至高安。",
    "X79n1560_007:0506b11_3": "謁价禪師。",
    "X79n1560_007:0506b12_4": "价與語喜。",
    "X79n1560_007:0506b12_5": "撫之曰。",
    "X79n1560_007:0506b12_6": "掌有神珠。",
    "X79n1560_007:0506b12_7": "白晝示人。",
    "X79n1560_007:0506b12_8": "人且按劒。",
    "X79n1560_007:0506b13_9": "況玄夜乎。",
    "X79n1560_007:0506b13_10": "子可貴也。",
    "X79n1560_007:0506b13_11": "玄曰。",
    "X79n1560_007:0506b13_12": "但不識珠者耳。",
    "X79n1560_007:0506b13_13": "倘識之亦無晝夜。",
    "X79n1560_007:0506b14_14": "价稱之以為俊士。",
    "X79n1560_007:0506b14_15": "价歿廬于塔旁三年。",
    "X79n1560_007:0506b14_16": "而學者來。",
    "X79n1560_007:0506b15_17": "依從日盛。",
    "X79n1560_007:0506b15_18": "玄曰。",
    "X79n1560_007:0506b15_19": "大平時世。",
    "X79n1560_007:0506b15_20": "饑餐困臥復有何事。",
    "X79n1560_007:0506b16_21": "吾本無事。",
    "X79n1560_007:0506b16_22": "汝與麼來相尋。",
    "X79n1560_007:0506b16_23": "是無事生事。",
    "X79n1560_007:0506b16_24": "無事生事。",
    "X79n1560_007:0506b17_0": "道人所忌。",
    "X79n1560_007:0506b17_1": "何不各自歇去。",
    "X79n1560_007:0506b17_2": "中和初。",
    "X79n1560_007:0506b17_3": "拜辭其塔。",
    "X79n1560_007:0506b17_4": "北游久之。",
    "X79n1560_007:0506b18_5": "南還寓止豫章。",
    "X79n1560_007:0506b18_6": "南平鍾王執弟子禮。",
    "X79n1560_007:0506b18_7": "北面而師事之。",
    "X79n1560_007:0506b19_8": "玄厭城居。",
    "X79n1560_007:0506b19_9": "思超放山林。",
    "X79n1560_007:0506b19_10": "王為買末山。",
    "X79n1560_007:0506b19_11": "建精舍。",
    "X79n1560_007:0506b19_12": "號隆濟。",
    "X79n1560_007:0506b20_13": "以延之。",
    "X79n1560_007:0506b20_14": "學者風靡而至。",
    "X79n1560_007:0506b20_15": "或問。",
    "X79n1560_007:0506b20_16": "自心他心。",
    "X79n1560_007:0506b20_17": "得相見否。",
    "X79n1560_007:0506b21_0": "玄曰。",
    "X79n1560_007:0506b21_1": "自己尚不見。",
    "X79n1560_007:0506b21_2": "他人何可觀。",
    "X79n1560_007:0506b21_3": "又問。",
    "X79n1560_007:0506b21_4": "罪福之性。",
    "X79n1560_007:0506b21_5": "如何了達。",
    "X79n1560_007:0506b22_6": "得無同異。",
    "X79n1560_007:0506b22_7": "玄曰。",
    "X79n1560_007:0506b22_8": "絺綌不禦寒。",
    "X79n1560_007:0506b22_9": "又甞問僧。",
    "X79n1560_007:0506b22_10": "近自何處來。",
    "X79n1560_007:0506b23_11": "曰閩嶺。",
    "X79n1560_007:0506b23_12": "玄曰遠涉不易。",
    "X79n1560_007:0506b23_13": "曰不難。",
    "X79n1560_007:0506b23_14": "動步便到。",
    "X79n1560_007:0506b23_15": "玄曰。",
    "X79n1560_007:0506b24_0": "有不動步者麼。",
    "X79n1560_007:0506b24_1": "僧云有。",
    "X79n1560_007:0506b24_2": "玄曰爭得到此間。",
    "X79n1560_007:0506b24_3": "其僧不能對。",
    "X79n1560_007:0506c01_4": "玄以杖逐之。",
    "X79n1560_007:0506c01_5": "玄謂門弟子曰。",
    "X79n1560_007:0506c01_6": "佛意祖意。",
    "X79n1560_007:0506c01_7": "如手展握。",
    "X79n1560_007:0506c02_0": "先師安立五位。",
    "X79n1560_007:0506c02_1": "發明雲巖宗旨。",
    "X79n1560_007:0506c02_2": "譬如神醫冶病。",
    "X79n1560_007:0506c02_3": "其藥只是尋常用者。",
    "X79n1560_007:0506c03_4": "語忌十成。",
    "X79n1560_007:0506c03_5": "不欲斷絕。",
    "X79n1560_007:0506c03_6": "機忌觸犯。",
    "X79n1560_007:0506c03_7": "不欲染汙。",
    "X79n1560_007:0506c04_8": "但學者機思不妙。",
    "X79n1560_007:0506c04_9": "唯尋九轉靈丹。",
    "X79n1560_007:0506c04_10": "云能起死。",
    "X79n1560_007:0506c04_11": "是大不然。",
    "X79n1560_007:0506c05_12": "法華經有化城一品。",
    "X79n1560_007:0506c05_13": "佛祖密說。",
    "X79n1560_007:0506c05_14": "熟讀分明。",
    "X79n1560_007:0506c05_15": "大通智勝佛。",
    "X79n1560_007:0506c06_16": "壽五百四十萬億那由他劫。",
    "X79n1560_007:0506c06_17": "其坐道場。",
    "X79n1560_007:0506c06_18": "破魔軍已。",
    "X79n1560_007:0506c07_19": "垂得阿耨多羅三藐三菩提。",
    "X79n1560_007:0506c07_20": "而諸佛法不現在前。",
    "X79n1560_007:0506c08_21": "如是一小劫。",
    "X79n1560_007:0506c08_22": "乃至十小劫。",
    "X79n1560_007:0506c08_23": "結跏趺坐。",
    "X79n1560_007:0506c08_24": "身心不動。",
    "X79n1560_007:0506c09_0": "而諸佛法猶不在前。",
    "X79n1560_007:0506c09_1": "言垂成者。",
    "X79n1560_007:0506c09_2": "言一小劫。",
    "X79n1560_007:0506c09_3": "言十小劫者。",
    "X79n1560_007:0506c10_4": "是染汙是斷絕。",
    "X79n1560_007:0506c10_5": "又曰。",
    "X79n1560_007:0506c10_6": "爾時忉利諸天。",
    "X79n1560_007:0506c10_7": "先為彼佛。",
    "X79n1560_007:0506c10_8": "於菩提樹下。",
    "X79n1560_007:0506c11_9": "敷師子座。",
    "X79n1560_007:0506c11_10": "高一由旬。",
    "X79n1560_007:0506c11_11": "佛於此座。",
    "X79n1560_007:0506c11_12": "當得阿耨多羅三藐三菩提。",
    "X79n1560_007:0506c12_13": "適坐此座時。",
    "X79n1560_007:0506c12_14": "諸梵天王。",
    "X79n1560_007:0506c12_15": "雨眾天花。",
    "X79n1560_007:0506c13_0": "面百由旬。",
    "X79n1560_007:0506c13_1": "香風時來。",
    "X79n1560_007:0506c13_2": "吹去萎花。",
    "X79n1560_007:0506c13_3": "更雨新者。",
    "X79n1560_007:0506c13_4": "如是不絕。",
    "X79n1560_007:0506c14_0": "滿十小劫。",
    "X79n1560_007:0506c14_1": "供養於佛。",
    "X79n1560_007:0506c14_2": "常擊天鼓。",
    "X79n1560_007:0506c14_3": "其餘諸天。",
    "X79n1560_007:0506c14_4": "作天伎樂。",
    "X79n1560_007:0506c15_0": "常雨此華。",
    "X79n1560_007:0506c15_1": "四王諸天。",
    "X79n1560_007:0506c15_2": "為供養佛。",
    "X79n1560_007:0506c15_3": "常擊天鼓。",
    "X79n1560_007:0506c15_4": "其餘諸天。",
    "X79n1560_007:0506c16_0": "作天伎樂。",
    "X79n1560_007:0506c16_1": "滿十小劫。",
    "X79n1560_007:0506c16_2": "至於滅度。",
    "X79n1560_007:0506c16_3": "亦復如是。",
    "X79n1560_007:0506c16_4": "諸比丘。",
    "X79n1560_007:0506c16_5": "大通智勝佛。",
    "X79n1560_007:0506c17_6": "過十小劫。",
    "X79n1560_007:0506c17_7": "諸佛之法。",
    "X79n1560_007:0506c17_8": "乃現在前。",
    "X79n1560_007:0506c17_9": "成阿耨多羅三藐三菩提。",
    "X79n1560_007:0506c18_10": "言過十小劫者。",
    "X79n1560_007:0506c18_11": "偏正回互之旨也。",
    "X79n1560_007:0506c18_12": "祖師曰。",
    "X79n1560_007:0506c19_13": "藉教悟宗者。",
    "X79n1560_007:0506c19_14": "夫豈不然哉。",
    "X79n1560_007:0506c19_15": "偽唐乾寧三年二月十七日。",
    "X79n1560_007:0506c20_16": "晨興誡其徒曰。",
    "X79n1560_007:0506c20_17": "無虗度光陰。",
    "X79n1560_007:0506c20_18": "無虗消信施。",
    "X79n1560_007:0506c20_19": "既已出家。",
    "X79n1560_007:0506c21_20": "唯道是履。",
    "X79n1560_007:0506c21_21": "名大丈夫。",
    "X79n1560_007:0506c21_22": "於是寂然在定。",
    "X79n1560_007:0506c21_23": "至三月二十日乃化。",
    "X79n1560_007:0506c22_24": "閱世六十有三。",
    "X79n1560_007:0506c22_25": "坐四十有二夏。",
    "X79n1560_007:0506c23_0": "贊曰。",
    "X79n1560_007:0506c23_1": "巖頭曰。",
    "X79n1560_007:0506c23_2": "但識綱宗。",
    "X79n1560_007:0506c23_3": "本無寔法。",
    "X79n1560_007:0506c23_4": "玄言語。",
    "X79n1560_007:0506c23_5": "忌十成。",
    "X79n1560_007:0506c23_6": "不欲斷絕。",
    "X79n1560_007:0506c24_7": "機忌觸犯。",
    "X79n1560_007:0506c24_8": "不欲染汙者綱宗。",
    "X79n1560_007:0506c24_9": "也至引法華以證成。",
    "X79n1560_007:0507a01_10": "明佛祖之密說。",
    "X79n1560_007:0507a01_11": "泮然無疑。",
    "X79n1560_007:0507a01_12": "藉教以悟宗。",
    "X79n1560_007:0507a01_13": "夫豈虗語哉。",
    "X79n1560_007:0507a02_14": "余至九峯。",
    "X79n1560_007:0507a02_15": "拜其塔。",
    "X79n1560_007:0507a02_16": "碑已斷壞。",
    "X79n1560_007:0507a02_17": "不可識。",
    "X79n1560_007:0507a02_18": "有木碑書。",
    "X79n1560_007:0507a03_0": "其略如此耳。",
    "X79n1560_007:0507a03_1": "今其宗枝。",
    "X79n1560_007:0507a03_2": "皆不及玄所示綱宗。",
    "X79n1560_007:0507a03_3": "何也。",
    "X79n1560_007:0507a04_0": "南康雲居齊禪師",
    "X79n1560_007:0507a05_0": "禪師名道齊。",
    "X79n1560_007:0507a05_1": "生金氏。",
    "X79n1560_007:0507a05_2": "南昌人也。",
    "X79n1560_007:0507a05_3": "幼依百丈明照禪師得度。",
    "X79n1560_007:0507a06_4": "種性猛利。",
    "X79n1560_007:0507a06_5": "經行燕坐。",
    "X79n1560_007:0507a06_6": "以未明己事為憂。",
    "X79n1560_007:0507a06_7": "持一鉢徧歷叢林。",
    "X79n1560_007:0507a07_8": "學心不息。",
    "X79n1560_007:0507a07_9": "時法燈禪師。",
    "X79n1560_007:0507a07_10": "住南昌上藍。",
    "X79n1560_007:0507a07_11": "齊往依之。",
    "X79n1560_007:0507a08_12": "法燈使知藏司。",
    "X79n1560_007:0507a08_13": "法燈偶見齊呼曰。",
    "X79n1560_007:0507a08_14": "每見舉祖師西來意話。",
    "X79n1560_007:0507a09_15": "藏主如何商略。",
    "X79n1560_007:0507a09_16": "齊曰。",
    "X79n1560_007:0507a09_17": "不東不西。",
    "X79n1560_007:0507a09_18": "法燈曰。",
    "X79n1560_007:0507a09_19": "若與麼會。",
    "X79n1560_007:0507a10_20": "了無交涉。",
    "X79n1560_007:0507a10_21": "曰未審尊意如何。",
    "X79n1560_007:0507a10_22": "法燈良久曰。",
    "X79n1560_007:0507a10_23": "西來有甚意便去。",
    "X79n1560_007:0507a11_24": "齊於是頓悟其旨。",
    "X79n1560_007:0507a11_25": "初住高安大愚。",
    "X79n1560_007:0507a11_26": "有搜玄拈古代別之語。",
    "X79n1560_007:0507a12_27": "盛行諸方。",
    "X79n1560_007:0507a12_28": "號東禪。",
    "X79n1560_007:0507a12_29": "甞謂門弟子曰。",
    "X79n1560_007:0507a13_30": "達磨言。",
    "X79n1560_007:0507a13_31": "此方經唯楞伽。",
    "X79n1560_007:0507a13_32": "可以印心。",
    "X79n1560_007:0507a13_33": "吾讀此經。",
    "X79n1560_007:0507a13_34": "偈曰。",
    "X79n1560_007:0507a14_0": "諸法無法體。",
    "X79n1560_007:0507a14_1": "而說唯是心。",
    "X79n1560_007:0507a14_2": "不見於自心。",
    "X79n1560_007:0507a14_3": "而起於分別。",
    "X79n1560_007:0507a15_0": "可謂大慈悲父。",
    "X79n1560_007:0507a15_1": "如實極談。",
    "X79n1560_007:0507a15_2": "我輩自不領受。",
    "X79n1560_007:0507a15_3": "背負恩德。",
    "X79n1560_007:0507a16_0": "如恒河沙。",
    "X79n1560_007:0507a16_1": "或問曰。",
    "X79n1560_007:0507a16_2": "然則見自心。",
    "X79n1560_007:0507a16_3": "遂斷分別乎。",
    "X79n1560_007:0507a16_4": "齊曰非然也。",
    "X79n1560_007:0507a17_5": "譬如調馬。",
    "X79n1560_007:0507a17_6": "馬自見其影而不驚。",
    "X79n1560_007:0507a17_7": "何以故。",
    "X79n1560_007:0507a17_8": "以自知其影。",
    "X79n1560_007:0507a18_9": "從自身出故。",
    "X79n1560_007:0507a18_10": "吾以是知。",
    "X79n1560_007:0507a18_11": "不斷分別。",
    "X79n1560_007:0507a18_12": "亦捨心相也。",
    "X79n1560_007:0507a19_0": "祇今目前。",
    "X79n1560_007:0507a19_1": "如實而觀。",
    "X79n1560_007:0507a19_2": "不見纖毫。",
    "X79n1560_007:0507a19_3": "祖師曰。",
    "X79n1560_007:0507a19_4": "若見現在。",
    "X79n1560_007:0507a19_5": "過去未來亦應見。",
    "X79n1560_007:0507a20_6": "若不見過去未來。",
    "X79n1560_007:0507a20_7": "現在亦不應見。",
    "X79n1560_007:0507a20_8": "此語分明。",
    "X79n1560_007:0507a21_9": "人自迷昧。",
    "X79n1560_007:0507a21_10": "或又問龍濟曰。",
    "X79n1560_007:0507a21_11": "一切鐘鼓本無聲。",
    "X79n1560_007:0507a22_0": "如何信之無聲齊。",
    "X79n1560_007:0507a22_1": "曰祖師曰。",
    "X79n1560_007:0507a22_2": "如鼓聲無有作者。",
    "X79n1560_007:0507a22_3": "無有住處。",
    "X79n1560_007:0507a23_4": "畢竟空故。",
    "X79n1560_007:0507a23_5": "但誑凡夫耳。",
    "X79n1560_007:0507a23_6": "若鼓聲是實有。",
    "X79n1560_007:0507a23_7": "鐘聲俱擊。",
    "X79n1560_007:0507a24_8": "應不相參。",
    "X79n1560_007:0507a24_9": "所以玄沙曰。",
    "X79n1560_007:0507a24_10": "鐘中無鼓響。",
    "X79n1560_007:0507a24_11": "鼓中無鐘聲。",
    "X79n1560_007:0507b01_0": "鐘鼓不交參。",
    "X79n1560_007:0507b01_1": "句句無前後。",
    "X79n1560_007:0507b01_2": "若不當體寂滅。",
    "X79n1560_007:0507b01_3": "如何得句句無前後耶。",
    "X79n1560_007:0507b02_4": "後移住幽谷山雙林禪院。",
    "X79n1560_007:0507b02_5": "又遷住雲居。",
    "X79n1560_007:0507b03_0": "凡二十年。",
    "X79n1560_007:0507b03_1": "至道三年丁酉九月示疾。",
    "X79n1560_007:0507b03_2": "八日申時令擊鐘集眾。",
    "X79n1560_007:0507b04_3": "維那白眾已集。",
    "X79n1560_007:0507b04_4": "齊笑敘出家本末。",
    "X79n1560_007:0507b04_5": "揖謝輔弼叢席者曰。",
    "X79n1560_007:0507b05_6": "今日老僧以風火相逼。",
    "X79n1560_007:0507b05_7": "特與諸人相見。",
    "X79n1560_007:0507b05_8": "且向什麼處見。",
    "X79n1560_007:0507b06_9": "向四大五陰處見耶。",
    "X79n1560_007:0507b06_10": "六入十二處見耶。",
    "X79n1560_007:0507b07_0": "是種種處不可見。",
    "X79n1560_007:0507b07_1": "則只今相問者是誰。",
    "X79n1560_007:0507b07_2": "若真見得可謂後學有賴。",
    "X79n1560_007:0507b08_3": "良久曰。",
    "X79n1560_007:0507b08_4": "吾化後。",
    "X79n1560_007:0507b08_5": "當以院事累契瓌。",
    "X79n1560_007:0507b08_6": "乃化。",
    "X79n1560_007:0507b09_0": "閱世六十有九。",
    "X79n1560_007:0507b09_1": "坐四十有八夏。",
    "X79n1560_007:0507b10_0": "贊曰。",
    "X79n1560_007:0507b10_1": "余讚大愚東禪碑。",
    "X79n1560_007:0507b10_2": "碑載齊悟契之緣。",
    "X79n1560_007:0507b10_3": "法燈曰。",
    "X79n1560_007:0507b10_4": "西來有甚意。",
    "X79n1560_007:0507b11_5": "以校傳燈曰。",
    "X79n1560_007:0507b11_6": "他家自有兒孫在。",
    "X79n1560_007:0507b11_7": "之語誤也。",
    "X79n1560_007:0507b12_0": "昔有僧問趙州。",
    "X79n1560_007:0507b12_1": "如何是祖師西來意。",
    "X79n1560_007:0507b12_2": "答曰庭前栢樹子。",
    "X79n1560_007:0507b13_3": "又隨而誡之曰。",
    "X79n1560_007:0507b13_4": "汝若肯我與麼道。",
    "X79n1560_007:0507b13_5": "我則辜負汝。",
    "X79n1560_007:0507b13_6": "汝若不肯我與麼道。",
    "X79n1560_007:0507b14_7": "我則不辜負汝。",
    "X79n1560_007:0507b14_8": "而昧者勦之。",
    "X79n1560_007:0507b14_9": "使古人之意不完。",
    "X79n1560_007:0507b15_10": "為害甚矣。",
    "X79n1560_007:0507b15_11": "故併錄之。",
    "X79n1560_007:0507b16_0": "瑞鹿先禪師",
    "X79n1560_007:0507b17_0": "祖師名本先。",
    "X79n1560_007:0507b17_1": "生鄭氏。",
    "X79n1560_007:0507b17_2": "溫州永嘉人也。",
    "X79n1560_007:0507b17_3": "兒稚不甘處俗。",
    "X79n1560_007:0507b18_0": "去依集慶院沙門某。",
    "X79n1560_007:0507b18_1": "年二十五。",
    "X79n1560_007:0507b18_2": "為沙彌。",
    "X79n1560_007:0507b18_3": "詣天台國清寺。",
    "X79n1560_007:0507b19_4": "受滿分戒。",
    "X79n1560_007:0507b19_5": "即造韶國師。",
    "X79n1560_007:0507b19_6": "服勤十年。",
    "X79n1560_007:0507b19_7": "住瑞鹿寺。",
    "X79n1560_007:0507b19_8": "足不歷城邑。",
    "X79n1560_007:0507b20_9": "手不度財帛。",
    "X79n1560_007:0507b20_10": "不設臥具。",
    "X79n1560_007:0507b20_11": "不衣繭絲。",
    "X79n1560_007:0507b20_12": "卯齋終日。",
    "X79n1560_007:0507b21_0": "宴坐申旦。",
    "X79n1560_007:0507b21_1": "誨誘門弟子。",
    "X79n1560_007:0507b21_2": "踰三十年。",
    "X79n1560_007:0507b21_3": "其志彌厲。",
    "X79n1560_007:0507b21_4": "謂眾曰。",
    "X79n1560_007:0507b22_0": "吾初見天台。",
    "X79n1560_007:0507b22_1": "言下便薦。",
    "X79n1560_007:0507b22_2": "然千日之內。",
    "X79n1560_007:0507b22_3": "四威儀之中。",
    "X79n1560_007:0507b22_4": "似物礙膺。",
    "X79n1560_007:0507b23_5": "如讎同處。",
    "X79n1560_007:0507b23_6": "一日忽然猛省。",
    "X79n1560_007:0507b23_7": "譬如洗面摸著鼻孔。",
    "X79n1560_007:0507b24_8": "作偈三首曰。",
    "X79n1560_007:0507b24_9": "非風幡動仁心動。",
    "X79n1560_007:0507b24_10": "自古相傳直至今。",
    "X79n1560_007:0507c01_0": "今後水雲人欲曉。",
    "X79n1560_007:0507c01_1": "祖師真是好知音。",
    "X79n1560_007:0507c01_2": "又曰。",
    "X79n1560_007:0507c01_3": "若是見色便見心。",
    "X79n1560_007:0507c02_4": "人來問著方難答。",
    "X79n1560_007:0507c02_5": "若求道理說多般。",
    "X79n1560_007:0507c02_6": "辜負平生三事衲。",
    "X79n1560_007:0507c03_7": "又曰。",
    "X79n1560_007:0507c03_8": "曠大劫來只如是。",
    "X79n1560_007:0507c03_9": "如是同天亦同地。",
    "X79n1560_007:0507c04_0": "同地同天作麼形。",
    "X79n1560_007:0507c04_1": "作麼形兮無不是。",
    "X79n1560_007:0507c04_2": "乃又曰。",
    "X79n1560_007:0507c04_3": "華嚴稱。",
    "X79n1560_007:0507c05_0": "佛身充滿於法界。",
    "X79n1560_007:0507c05_1": "是真箇也無。",
    "X79n1560_007:0507c05_2": "且如佛身。",
    "X79n1560_007:0507c05_3": "既已充滿法界。",
    "X79n1560_007:0507c06_4": "菩薩界。",
    "X79n1560_007:0507c06_5": "緣覺聲聞界。",
    "X79n1560_007:0507c06_6": "人天修羅界。",
    "X79n1560_007:0507c06_7": "餓鬼畜生地獄界。",
    "X79n1560_007:0507c07_8": "應無處蹲。",
    "X79n1560_007:0507c07_9": "如是理論。",
    "X79n1560_007:0507c07_10": "太煞聱訛。",
    "X79n1560_007:0507c07_11": "尋常說。",
    "X79n1560_007:0507c07_12": "諸法所生。",
    "X79n1560_007:0507c08_13": "唯心所現。",
    "X79n1560_007:0507c08_14": "且道即今五根。",
    "X79n1560_007:0507c08_15": "所對六境。",
    "X79n1560_007:0507c08_16": "與汝是同耶是別耶。",
    "X79n1560_007:0507c09_17": "同則何不作一塊。",
    "X79n1560_007:0507c09_18": "別則如何說唯是一心。",
    "X79n1560_007:0507c09_19": "大須著精彩。",
    "X79n1560_007:0507c10_20": "佛法不是等閑。",
    "X79n1560_007:0507c10_21": "大中祥符元年二月。",
    "X79n1560_007:0507c10_22": "謂門弟子如晝曰。",
    "X79n1560_007:0507c11_23": "為我造箇卵塔。",
    "X79n1560_007:0507c11_24": "塔成我行矣。",
    "X79n1560_007:0507c11_25": "八月望日畢工。",
    "X79n1560_007:0507c12_26": "遠近道俗造山。",
    "X79n1560_007:0507c12_27": "唯恐其後。",
    "X79n1560_007:0507c12_28": "是日如平居。",
    "X79n1560_007:0507c12_29": "至午時。",
    "X79n1560_007:0507c13_0": "安坐方丈。",
    "X79n1560_007:0507c13_1": "手結寶印。",
    "X79n1560_007:0507c13_2": "謂如晝曰。",
    "X79n1560_007:0507c13_3": "古人曰。",
    "X79n1560_007:0507c13_4": "騎虎頭撩虎尾。",
    "X79n1560_007:0507c14_5": "中央事作麼生。",
    "X79n1560_007:0507c14_6": "如晝曰。",
    "X79n1560_007:0507c14_7": "也祇是如晝。",
    "X79n1560_007:0507c14_8": "先曰。",
    "X79n1560_007:0507c14_9": "汝問我。",
    "X79n1560_007:0507c15_0": "如晝乃問。",
    "X79n1560_007:0507c15_1": "騎虎頭撩虎尾。",
    "X79n1560_007:0507c15_2": "中央事作麼生。",
    "X79n1560_007:0507c15_3": "先曰我也弄不出。",
    "X79n1560_007:0507c16_4": "於是奄然開一目。",
    "X79n1560_007:0507c16_5": "微視而寂。",
    "X79n1560_007:0507c16_6": "閱世六十有七。",
    "X79n1560_007:0507c17_0": "坐四十有二夏。",
    "X79n1560_007:0507c17_1": "長吏以其事聞。",
    "X79n1560_007:0507c17_2": "有詔本州常加檢視。",
    "X79n1560_007:0507c18_0": "如晝乃奉其平生所著。",
    "X79n1560_007:0507c18_1": "竹林集十卷。",
    "X79n1560_007:0507c18_2": "詩辭千餘首。",
    "X79n1560_007:0507c18_3": "詣闕上進。",
    "X79n1560_007:0507c19_4": "詔藏秘閣。",
    "X79n1560_007:0507c19_5": "如晝特賜紫衣。",
    "X79n1560_007:0507c20_0": "贊曰。",
    "X79n1560_007:0507c20_1": "讀先傳。",
    "X79n1560_007:0507c20_2": "校傳燈語句。",
    "X79n1560_007:0507c20_3": "詳略少異耳。",
    "X79n1560_007:0507c20_4": "夫自心非外有。",
    "X79n1560_007:0507c21_5": "妄盡而自返。",
    "X79n1560_007:0507c21_6": "則於生死之際。",
    "X79n1560_007:0507c21_7": "超然自得如此。",
    "X79n1560_007:0507c21_8": "然余每怪。",
    "X79n1560_007:0507c22_9": "前聖平日機辯。",
    "X79n1560_007:0507c22_10": "皆不可犯。",
    "X79n1560_007:0507c22_11": "至臨終之日。",
    "X79n1560_007:0507c22_12": "皆弭光泯氣。",
    "X79n1560_007:0507c23_13": "洞山曰。",
    "X79n1560_007:0507c23_14": "吾閑名已謝。",
    "X79n1560_007:0507c23_15": "臨濟曰。",
    "X79n1560_007:0507c23_16": "誰知吾正法眼藏。",
    "X79n1560_007:0507c24_0": "向這瞎驢邊滅。",
    "X79n1560_007:0507c24_1": "今先又曰。",
    "X79n1560_007:0507c24_2": "我也弄不出。",
    "X79n1560_007:0507c24_3": "嗚呼其有旨要乎。",
    "X79n1560_007:0508a03_0": "禪林僧寶傳卷第七"
}