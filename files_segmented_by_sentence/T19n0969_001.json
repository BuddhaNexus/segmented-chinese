[
    {
        "source_sentence": "佛頂最勝陀羅尼經",
        "from": "T19n0969_001:0355b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐天竺三藏地婆訶羅譯",
        "from": "T19n0969_001:0355b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛在舍衛國祇樹給孤獨園。",
        "from": "T19n0969_001:0355b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾八千人俱。",
        "from": "T19n0969_001:0355b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有菩薩摩訶薩等。",
        "from": "T19n0969_001:0355b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆得正智明炬。",
        "from": "T19n0969_001:0355b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照於諸法無所罣礙。",
        "from": "T19n0969_001:0355b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰文殊師利菩薩蓮華勝藏菩薩。",
        "from": "T19n0969_001:0355b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸障菩薩觀世音菩薩。",
        "from": "T19n0969_001:0355b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大勢菩薩執金剛菩薩。",
        "from": "T19n0969_001:0355b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏菩薩普賢菩薩。",
        "from": "T19n0969_001:0355b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩持地菩薩摩訶薩等。",
        "from": "T19n0969_001:0355b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是上首三萬二千人俱。",
        "from": "T19n0969_001:0355b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有萬梵天王善吒天等。",
        "from": "T19n0969_001:0355b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各從餘世界來至佛所。",
        "from": "T19n0969_001:0355b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有萬二千天帝。",
        "from": "T19n0969_001:0355b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與無量諸天龍八部人非人等來至佛所。",
        "from": "T19n0969_001:0355b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊四眾圍繞。",
        "from": "T19n0969_001:0355c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養恭敬而為說法。",
        "from": "T19n0969_001:0355c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當是之時釋天眾中。",
        "from": "T19n0969_001:0355c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一天人名曰善住。",
        "from": "T19n0969_001:0355c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸天女處大寶宮。",
        "from": "T19n0969_001:0355c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放逸嬉戲恣情受樂。",
        "from": "T19n0969_001:0355c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夜有聲呼善住曰。",
        "from": "T19n0969_001:0355c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却後七日汝定命終。",
        "from": "T19n0969_001:0355c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提七返生死。",
        "from": "T19n0969_001:0355c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是已後復入地獄。",
        "from": "T19n0969_001:0355c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從地獄出後得人身。",
        "from": "T19n0969_001:0355c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生盲貧窮具受諸苦。",
        "from": "T19n0969_001:0355c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住聞已心驚惶怖。",
        "from": "T19n0969_001:0355c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身毛為竪戰慄不安。",
        "from": "T19n0969_001:0355c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奔馳往詣彼釋天所。",
        "from": "T19n0969_001:0355c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陳已所聞請求哀救。",
        "from": "T19n0969_001:0355c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時釋天王聞善住言。",
        "from": "T19n0969_001:0355c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生驚悼默而思曰。",
        "from": "T19n0969_001:0355c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何七生彼生何類。",
        "from": "T19n0969_001:0355c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是念已即見善住。",
        "from": "T19n0969_001:0355c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死相現前受於猪身。",
        "from": "T19n0969_001:0355c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢猪身已復受狗身。",
        "from": "T19n0969_001:0355c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是次第狐身猴身。",
        "from": "T19n0969_001:0355c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒蛇之身烏身鷲身。",
        "from": "T19n0969_001:0355c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是七生恒食臭穢。",
        "from": "T19n0969_001:0355c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時釋天王見此事已。",
        "from": "T19n0969_001:0355c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深哀善住必受斯苦。",
        "from": "T19n0969_001:0355c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自念於彼無如之何。",
        "from": "T19n0969_001:0355c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟佛世尊方能救濟。",
        "from": "T19n0969_001:0355c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時釋天王於夜後分。",
        "from": "T19n0969_001:0355c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齎諸華鬘衣服瓔珞種種香等。",
        "from": "T19n0969_001:0355c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣舍衛國供養世尊。",
        "from": "T19n0969_001:0355c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮佛雙足却住一面。",
        "from": "T19n0969_001:0355c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言世尊。",
        "from": "T19n0969_001:0355c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所止宮有一天子名曰善住。",
        "from": "T19n0969_001:0355c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耽荒戲樂縱情遊處。",
        "from": "T19n0969_001:0355c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜忽有聲呼而謂曰。",
        "from": "T19n0969_001:0355c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝後七日必定命終。",
        "from": "T19n0969_001:0355c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提受七惡報。",
        "from": "T19n0969_001:0355c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處常食臭穢。",
        "from": "T19n0969_001:0355c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是已後復入地獄。",
        "from": "T19n0969_001:0355c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從地獄出得生人中。",
        "from": "T19n0969_001:0355c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盲瞽貧窮具受眾苦。",
        "from": "T19n0969_001:0355c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向我求救無如之何。",
        "from": "T19n0969_001:0355c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我思世尊方能救彼。",
        "from": "T19n0969_001:0355c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊聞見釋天陳請畢已。",
        "from": "T19n0969_001:0355c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂放種種雜色光明。",
        "from": "T19n0969_001:0355c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流照十方一切世界。",
        "from": "T19n0969_001:0355c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照已還至佛世尊所。",
        "from": "T19n0969_001:0355c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞三匝從佛口入。",
        "from": "T19n0969_001:0355c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛便微笑告釋天言。",
        "from": "T19n0969_001:0355c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有如是清淨諸趣灌頂最勝大陀羅尼。",
        "from": "T19n0969_001:0355c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿汝願救於彼苦。",
        "from": "T19n0969_001:0355c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦大饒益一切眾生。",
        "from": "T19n0969_001:0355c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝我此神呪力。",
        "from": "T19n0969_001:0355c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅除一切業障地獄畜生。",
        "from": "T19n0969_001:0355c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻摩羅等種種諸苦。",
        "from": "T19n0969_001:0355c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又能破壞地獄等道。",
        "from": "T19n0969_001:0355c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生發正覺路。",
        "from": "T19n0969_001:0356a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝若有暫能聽聞之者。",
        "from": "T19n0969_001:0356a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得消滅一切業障生死諸苦。",
        "from": "T19n0969_001:0356a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲善利得宿命智。",
        "from": "T19n0969_001:0356a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一佛國至一佛國。",
        "from": "T19n0969_001:0356a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一天中生一天中。",
        "from": "T19n0969_001:0356a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處常識宿命。",
        "from": "T19n0969_001:0356a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有學習此經呪者。",
        "from": "T19n0969_001:0356a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現百年限更增其壽。",
        "from": "T19n0969_001:0356a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意淨泰然安樂。",
        "from": "T19n0969_001:0356a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛觀視諸天衛護。",
        "from": "T19n0969_001:0356a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩咸加慈念。",
        "from": "T19n0969_001:0356a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常讀誦此經呪者。",
        "from": "T19n0969_001:0356a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼三惡道所有諸苦息滅不行。",
        "from": "T19n0969_001:0356a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛剎諸天福門導之令入。",
        "from": "T19n0969_001:0356a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時天帝釋聞佛讚說此陀羅尼。",
        "from": "T19n0969_001:0356a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前白佛言世尊。",
        "from": "T19n0969_001:0356a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願如來憐愍攝護一切眾生。",
        "from": "T19n0969_001:0356a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請說所陳清淨諸趣佛頂最勝大陀羅尼。",
        "from": "T19n0969_001:0356a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊受天帝請。",
        "from": "T19n0969_001:0356a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為演說陀羅尼曰。",
        "from": "T19n0969_001:0356a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "納謨納莫一怛薩謎薄伽跋帝二㗌唳路迦引鉢囉底馝失瑟吒引坼佉切耶三余何反三菩馱引耶四摩訶牟去泥去五怛姪他六嗚吽七馝輸馱耶八三摩三漫多何婆去婆賀娑九薩破囉拏咖去𫪭伽訶那十薩婆何婆婆舜入提十一阿鼻詵者麼蘇伽陀跋囉跋繕那十二阿蜜㗚多引毘曬罽平十三阿引上喝囉上阿引喝囉十四上阿引去瑜散去陀引囉眤十五輸馱耶輸馱耶十六薩婆羯摩婆囉拏引儞十七謎嚧跋囉伽伽那毘舜去下同提十八嗚瑟膩引沙跋囉曷囉怛那毘社耶十九達摩馱都蘇毘舜提二十薩訶薩囉曷囉濕弭珊珠地帝二十一末昵摩訶末眤蘇真陀末眤二十二跋囉薩婆怛他揭多地瑟咤引那地瑟恥多二十三摩訶母姪唳二十四跋折囉箇引耶僧訶哆那蘇舜提二十五薩婆婆囉拏毘舜提二十六鉢剌底婆儞婆哆耶余何反阿去瑜舜提二十七三摩耶頞地瑟恥低二十八末儞摩末儞二十九怛闥多部多俱胝鉢李舜提三十仳芳已反薩普多馞地平舜提三十一社耶社耶三十二毘社耶毘社耶三十三毘社耶薩摩囉薩摩囉三十四薩婆菩馱引頞地瑟恥多舜提三十五跋折唳跋折囉揭鞞三十六跋折覽婆伐都三十七麼麼自稱名薩婆薩埵那引三十八箇耶毘舜提三十九薩婆𭇿去底平鉢李舜提四十薩婆怛他揭多四十一三磨去室縛二字合聲符賀反娑頞地瑟恥低四十二馞陀地耶反馞陀四十三菩陀耶菩陀耶四十四三曼多末囉達摩馱都鉢李舜提四十五薩婆怛他揭多四十六頞地瑟咤引那頞地瑟恥低四十七娑婆呵佛告天帝。",
        "from": "T19n0969_001:0356b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼八十八億百千恒河沙諸佛世尊所共宣說。",
        "from": "T19n0969_001:0356b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守護稱讚智印印之。",
        "from": "T19n0969_001:0356b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸佛為欲解脫地獄畜生閻摩羅等。",
        "from": "T19n0969_001:0356b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈溺苦海諸苦毒故。",
        "from": "T19n0969_001:0356b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又為利益短壽薄福卑陋下賤。",
        "from": "T19n0969_001:0356b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生諸惡業故。",
        "from": "T19n0969_001:0356b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又為安樂趣諸惡道夭逝亂心。",
        "from": "T19n0969_001:0356b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生諸苦惱故。",
        "from": "T19n0969_001:0356b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故諸佛說此最勝大陀羅尼。",
        "from": "T19n0969_001:0356b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝汝當以此大陀羅尼。",
        "from": "T19n0969_001:0356b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授善住天令彼修習。",
        "from": "T19n0969_001:0356b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當為彼諸天天子。",
        "from": "T19n0969_001:0356b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及閻浮提一切眾生宣揚顯說。",
        "from": "T19n0969_001:0356b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼眾生受持讀誦。",
        "from": "T19n0969_001:0356b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養恭敬尊重讚歎。",
        "from": "T19n0969_001:0356b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝我以此法陀羅尼印。",
        "from": "T19n0969_001:0356b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付囑於汝汝當奉持。",
        "from": "T19n0969_001:0356b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持此呪者悉能除滅百千劫中一切罪業。",
        "from": "T19n0969_001:0356b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處常遇諸佛。",
        "from": "T19n0969_001:0356b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至獲得無上菩提。",
        "from": "T19n0969_001:0356b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝我此法印大陀羅尼具大吉祥。",
        "from": "T19n0969_001:0356b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日藏寶所在之處光耀照朗。",
        "from": "T19n0969_001:0356b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦喻於彼閻浮提金。",
        "from": "T19n0969_001:0356b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無穢無瑕不染塵垢。",
        "from": "T19n0969_001:0356b26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人有能讀誦書持。",
        "from": "T19n0969_001:0356b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憶念修行供養之者。",
        "from": "T19n0969_001:0356b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得如上所有功德。",
        "from": "T19n0969_001:0356b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝若有書此大陀羅尼。",
        "from": "T19n0969_001:0356b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安彼高幢置高山上。",
        "from": "T19n0969_001:0356b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高屋高處及高塔中。",
        "from": "T19n0969_001:0356b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸四眾遠近見者。",
        "from": "T19n0969_001:0356c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得如上所有功德。",
        "from": "T19n0969_001:0356c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為幢影影覆其身。",
        "from": "T19n0969_001:0356c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為幢風風所吹鼓。",
        "from": "T19n0969_001:0356c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或幢飄颺飛塵坌身。",
        "from": "T19n0969_001:0356c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得如上所有功德。",
        "from": "T19n0969_001:0356c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝若有四眾。",
        "from": "T19n0969_001:0356c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於彼彼四衢道中造作塔廟。",
        "from": "T19n0969_001:0356c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置如是大陀羅尼。",
        "from": "T19n0969_001:0356c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日能以種種花鬘繒幡幢蓋。",
        "from": "T19n0969_001:0356c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓔珞香等以用供養。",
        "from": "T19n0969_001:0356c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及能旋繞恭敬禮拜。",
        "from": "T19n0969_001:0356c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人是大菩薩。",
        "from": "T19n0969_001:0356c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是真佛子是法橋梁。",
        "from": "T19n0969_001:0356c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是諸佛舍利寶塔。",
        "from": "T19n0969_001:0356c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時閻摩法王聞是事已。",
        "from": "T19n0969_001:0356c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夜將曉。",
        "from": "T19n0969_001:0356c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齎持種種雜色寶華。",
        "from": "T19n0969_001:0356c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種諸香寶衣瓔珞。",
        "from": "T19n0969_001:0356c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來詣佛所頂禮佛足。",
        "from": "T19n0969_001:0356c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞七匝却住一面。",
        "from": "T19n0969_001:0356c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸供具供養如來。",
        "from": "T19n0969_001:0356c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修供養已白佛言世尊。",
        "from": "T19n0969_001:0356c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為欲報佛恩故。",
        "from": "T19n0969_001:0356c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常勤奉事此大威力具大果報。",
        "from": "T19n0969_001:0356c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護一切閉地獄門。",
        "from": "T19n0969_001:0356c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨諸趣大陀羅尼。",
        "from": "T19n0969_001:0356c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王從坐而起。",
        "from": "T19n0969_001:0356c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繞佛三匝前白佛言。",
        "from": "T19n0969_001:0356c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊惟願為我說此修行陀羅尼法。",
        "from": "T19n0969_001:0356c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告四天王諦聽諦聽善思念之。",
        "from": "T19n0969_001:0356c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾為汝等及諸眾生。",
        "from": "T19n0969_001:0356c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說彼修行陀羅尼法。",
        "from": "T19n0969_001:0356c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有命短求長壽者。",
        "from": "T19n0969_001:0356c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有病苦求除愈者。",
        "from": "T19n0969_001:0356c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有惡業應墮地獄餓鬼畜生諸不善趣如是等類。",
        "from": "T19n0969_001:0356c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當以彼月十五日。",
        "from": "T19n0969_001:0356c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗浴清淨著新潔衣。",
        "from": "T19n0969_001:0356c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又當受持八戒齋法。",
        "from": "T19n0969_001:0356c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後誦此大陀羅尼滿足千遍。",
        "from": "T19n0969_001:0356c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲安樂增其壽命。",
        "from": "T19n0969_001:0356c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有病苦皆得除愈。",
        "from": "T19n0969_001:0356c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡業報悉滅無餘。",
        "from": "T19n0969_001:0356c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有耳聞如是呪者。",
        "from": "T19n0969_001:0356c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡其壽命往極樂國。",
        "from": "T19n0969_001:0356c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華化生常識宿命。",
        "from": "T19n0969_001:0356c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有為彼惡業所牽已命終者。",
        "from": "T19n0969_001:0356c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當誦此陀羅尼呪二十一遍。",
        "from": "T19n0969_001:0356c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以呪呪土散其屍上。",
        "from": "T19n0969_001:0356c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所生處捨彼苦身生天受樂。",
        "from": "T19n0969_001:0356c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能日日誦此最勝大陀羅尼經三七遍。",
        "from": "T19n0969_001:0356c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得如上所有功德。",
        "from": "T19n0969_001:0356c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生常處淨佛國土。",
        "from": "T19n0969_001:0356c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸佛剎作大光明。",
        "from": "T19n0969_001:0357a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與佛俱為佛所記。",
        "from": "T19n0969_001:0357a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至獲得大般涅槃。",
        "from": "T19n0969_001:0357a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有諸人於此法門。",
        "from": "T19n0969_001:0357a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所求諸心願者。",
        "from": "T19n0969_001:0357a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當作一壇四方正等。",
        "from": "T19n0969_001:0357a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其壇內散種種華燒眾名香。",
        "from": "T19n0969_001:0357a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心普念十方諸佛。",
        "from": "T19n0969_001:0357a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地長跪合掌。",
        "from": "T19n0969_001:0357a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二頭指按二拇指。",
        "from": "T19n0969_001:0357a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於心上稱言善哉。",
        "from": "T19n0969_001:0357a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後誦此陀羅尼呪。",
        "from": "T19n0969_001:0357a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人能誦持此呪。",
        "from": "T19n0969_001:0357a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日滿足一百八遍。",
        "from": "T19n0969_001:0357a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為供養如上所說恒河沙等諸佛世尊。",
        "from": "T19n0969_001:0357a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為供養汝等四王。",
        "from": "T19n0969_001:0357a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人一切讚善。",
        "from": "T19n0969_001:0357a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大菩提莊嚴其心。",
        "from": "T19n0969_001:0357a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲無礙智是真佛子。",
        "from": "T19n0969_001:0357a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說此語已。",
        "from": "T19n0969_001:0357a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告天帝言。",
        "from": "T19n0969_001:0357a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝汝可以此陀羅尼法。",
        "from": "T19n0969_001:0357a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授彼善住滿七日已。",
        "from": "T19n0969_001:0357a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可與彼俱來至我所。",
        "from": "T19n0969_001:0357a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時釋天王受佛教勅還本天宮。",
        "from": "T19n0969_001:0357a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼善住來授彼神呪善住聞已恭敬供養。",
        "from": "T19n0969_001:0357a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說奉行至于七日。",
        "from": "T19n0969_001:0357a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡業等皆得除滅。",
        "from": "T19n0969_001:0357a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於已天中增其壽命。",
        "from": "T19n0969_001:0357a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜踊躍發大聲言。",
        "from": "T19n0969_001:0357a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇哉佛陀奇哉達摩奇哉僧伽。",
        "from": "T19n0969_001:0357a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇哉最勝陀羅尼印力。",
        "from": "T19n0969_001:0357a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅除一切苦厄。",
        "from": "T19n0969_001:0357a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我得脫如是惡業。",
        "from": "T19n0969_001:0357a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善住天見是事已。",
        "from": "T19n0969_001:0357a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便往詣彼天帝所作如是言。",
        "from": "T19n0969_001:0357a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我蒙天恩為我請佛。",
        "from": "T19n0969_001:0357a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛為我說大陀羅尼。",
        "from": "T19n0969_001:0357a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我惡業皆悉除滅。",
        "from": "T19n0969_001:0357a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲往謝佛世尊恩。",
        "from": "T19n0969_001:0357a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願天王與我俱往。",
        "from": "T19n0969_001:0357a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時天帝釋將諸部屬。",
        "from": "T19n0969_001:0357a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與善住俱持諸香花眾妙瓔珞。",
        "from": "T19n0969_001:0357a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘天寶輅至於佛所。",
        "from": "T19n0969_001:0357a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸供具供養如來。",
        "from": "T19n0969_001:0357a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繞百千匝住一面立。",
        "from": "T19n0969_001:0357a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歌詠佛德言不能宣。",
        "from": "T19n0969_001:0357a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊申金色手。",
        "from": "T19n0969_001:0357a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撫彼善住發和雅音授其記莂。",
        "from": "T19n0969_001:0357a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善住天歡喜却坐。",
        "from": "T19n0969_001:0357a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽於如來所說法要。",
        "from": "T19n0969_001:0357a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞說法已心懷踊躍。",
        "from": "T19n0969_001:0357a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與天帝俱禮佛而退。",
        "from": "T19n0969_001:0357a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛頂最勝陀羅尼經大輪金剛陀羅尼大輪金剛陀羅尼三藏地婆訶羅奉　詔譯納謨薩怛唎耶　地毘迦喃　怛他揭多喃　唵毘囉時毘囉時摩訶斫迦囉　拔闍唎薩多薩多　娑囉帝娑囉帝　怛唎曳　怛唎曳　毘陀末儞　三槃若儞　怛囉末底　悉陀　阿揭唎怛炎　娑婆訶誦此陀羅尼三七遍即當入一切曼荼羅壇也所作皆成誦呪有身印手印作印誦呪法即易成若未入壇不得輙作令誦此呪即當入壇作印行用不成盜法也。",
        "from": "T19n0969_001:0357b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日光菩薩呪南謨勃陀瞿上那上迷　南摩達摩莫訶底　南謨僧伽多也泥底下以反哩部卑薩僧沒反咄登沒反擔平納摩誦此呪滅一切障亦能辟魔乃除天災又若誦一遍禮佛一拜如此日別三時誦呪禮佛未來當得二相端正具足果報唵上摩利支曳　薩婆薩多婆頞陀利沙利娑上婆去訶　誦此呪極護人身當日別三時各誦一百八遍。",
        "from": "T19n0969_001:0357b21_2",
        "context_with_next_sentence": true
    }
]