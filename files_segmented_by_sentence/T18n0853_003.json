[
    {
        "source_sentence": "大毘盧遮那成佛神變加持經蓮",
        "from": "T18n0853_003:0158c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華胎藏菩提幢幖幟普通真言藏",
        "from": "T18n0853_003:0158c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大成就瑜伽卷下",
        "from": "T18n0853_003:0158c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青龍寺沙門法全集「持真言行者，　　次往第三院。",
        "from": "T18n0853_003:0158c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方初門中，　　釋迦師子壇，",
        "from": "T18n0853_003:0158c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂大因陀羅，　　妙善真金色，",
        "from": "T18n0853_003:0158c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方相均等，　　如前金剛印，",
        "from": "T18n0853_003:0159a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上現波頭摩，　　周匝皆黃暉，",
        "from": "T18n0853_003:0159a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛印圍繞，　　紫金光聚身，",
        "from": "T18n0853_003:0159a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具相三十二，　　被服袈裟衣，",
        "from": "T18n0853_003:0159a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐白蓮華臺，　　為令教流布，",
        "from": "T18n0853_003:0159a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住彼而說法，　　智手吉祥印空水持，",
        "from": "T18n0853_003:0159a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入寶處三昧，　　虛空觀自在，",
        "from": "T18n0853_003:0159a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能勝及妃。",
        "from": "T18n0853_003:0159a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來毫相尊，　　大轉輪光聚，",
        "from": "T18n0853_003:0159a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊音聲佛，　　如來悲愍慈。",
        "from": "T18n0853_003:0159a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左白傘蓋佛，　　勝佛最勝佛，",
        "from": "T18n0853_003:0159a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高佛摧碎佛，　　如來舌語笑，",
        "from": "T18n0853_003:0159a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶上爍乞底，　　栴檀香辟支，",
        "from": "T18n0853_003:0159a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多摩羅香等，　　目連須菩提，",
        "from": "T18n0853_003:0159a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉舍利弗，　　如來喜悲捨。",
        "from": "T18n0853_003:0159a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傘上如來牙，　　輪輻辟支佛，",
        "from": "T18n0853_003:0159a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶輻辟支佛，　　拘絺羅阿難，",
        "from": "T18n0853_003:0159a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦旃憂波離，　　智供養雲海。",
        "from": "T18n0853_003:0159a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」釋迦牟尼佛真言曰名捨（引）枳也（二合引）母儞。",
        "from": "T18n0853_003:0159a19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧光中現此真言，入寶處三昧，眷屬同入，乃至諸天等皆是如來所化之身：",
        "from": "T18n0853_003:0159a20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「次於世尊右，　　顯示遍知眼，",
        "from": "T18n0853_003:0159a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熙怡相微笑，　　遍體圓淨光，",
        "from": "T18n0853_003:0159a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憙見無比身，　　是名能寂母。",
        "from": "T18n0853_003:0159a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」真言曰則得佛母加持眼根清淨。",
        "from": "T18n0853_003:0159b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼印，二羽虛中合，屈風火背不相著，空輪竝建五眼成：",
        "from": "T18n0853_003:0159b01_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「次寫毫相明，　　住鉢頭摩華，",
        "from": "T18n0853_003:0159b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓照商佉色，　　執持如意寶，",
        "from": "T18n0853_003:0159b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿足眾希願，　　慧拳置眉間申風指，空在內掌。",
        "from": "T18n0853_003:0159b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」毫相真言曰不生之行淨行，即同仁中人最勝尊：",
        "from": "T18n0853_003:0159b07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「一切諸佛頂，　　慧手指峯聚，",
        "from": "T18n0853_003:0159b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置頂成密印。",
        "from": "T18n0853_003:0159b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」彼真言曰謂十方佛剎土微塵數諸佛之頂，頂是尊勝之義，即得如來頂相圓：",
        "from": "T18n0853_003:0159b13_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫糝曼多沒駄喃引鑁種子鑁鑁縛義入阿字，即無縛。",
        "from": "T18n0853_003:0159b14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無縛，言語道斷之義。",
        "from": "T18n0853_003:0159b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上有點，大空也。",
        "from": "T18n0853_003:0159b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「救世釋師子，　　次南五佛頂，",
        "from": "T18n0853_003:0159b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白傘豎慧風真金，　　定掌覆如蓋，",
        "from": "T18n0853_003:0159b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝頂前刀印金色，　　最勝印金輪淺黃，",
        "from": "T18n0853_003:0159b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光聚如來頂白，　　捨除內成拳內縛白，",
        "from": "T18n0853_003:0159b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風輪屈如鉤。",
        "from": "T18n0853_003:0159b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安布三佛頂，　　廣大發生頂，",
        "from": "T18n0853_003:0159b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同前蓮華印，　　極廣廣生頂，",
        "from": "T18n0853_003:0159b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五智金剛印，　　無邊音聲頂赤，",
        "from": "T18n0853_003:0159b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前商佉印。",
        "from": "T18n0853_003:0159b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」白傘蓋佛頂真言曰畢竟無生常清淨，法相不可得白淨。",
        "from": "T18n0853_003:0159b26_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲周遍覆，即法界諸眾生：",
        "from": "T18n0853_003:0159b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引㘕悉怛多鉢怛囉二合鄔瑟尼二合灑娑嚩二合賀勝佛頂真言曰大慧刀印：",
        "from": "T18n0853_003:0159c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引苫惹欲鄔瑟尼二合灑娑嚩二合賀最勝佛頂真言曰娑字是法華義。",
        "from": "T18n0853_003:0159c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧聲，故具鬚蘂。",
        "from": "T18n0853_003:0159c05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來極壽量：",
        "from": "T18n0853_003:0159c05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引施只種子尾惹欲鄔瑟尼二合灑娑嚩二合賀光聚佛頂真言曰如如無垢是即火輪，如來聚能除暗悉皆無。",
        "from": "T18n0853_003:0159c08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引怛陵二合帝儒囉施鄔瑟抳二合灑娑嚩二合賀除障佛頂真言曰：",
        "from": "T18n0853_003:0159c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引訶啉二合尾枳囉拏半祖鄔瑟尼二合灑娑嚩二合賀廣生佛頂真言曰：",
        "from": "T18n0853_003:0159c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引吒嚕吽二合鄔瑟尼二合灑娑嚩二合賀發生佛頂真言曰：",
        "from": "T18n0853_003:0159c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引輸嚕吽三合鄔瑟尼二合灑娑嚩二合賀無量聲佛頂真言曰虛合二風絞火背，空捻於火中節，如前商佉相：",
        "from": "T18n0853_003:0159c20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱引喃引吽惹欲鄔瑟尼二合灑娑嚩二合賀「次置聲聞眾，　　梵夾為幖幟左在。",
        "from": "T18n0853_003:0159c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」彼真言曰：",
        "from": "T18n0853_003:0159c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復置緣覺眾，　　內縛竪火輪，",
        "from": "T18n0853_003:0159c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿錫杖相。",
        "from": "T18n0853_003:0159c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」真言曰緣覺相與佛相何別？",
        "from": "T18n0853_003:0160a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛相圓滿，緣覺身相瘦：",
        "from": "T18n0853_003:0160a01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「釋迦牟尼前，　　無能勝及妃，",
        "from": "T18n0853_003:0160a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明王智持蓮風捻空，火屈入掌，右手，定掌外向舒高於頭。",
        "from": "T18n0853_003:0160a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　而在黑蓮上，妃密勝大口黑色持刀內縛，並二空如口形。",
        "from": "T18n0853_003:0160a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿上跛羅引爾多引真言曰無能勝，不可破壞，隱德而化。",
        "from": "T18n0853_003:0160a07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽字是釋迦如來忿怒師子震吼聲：",
        "from": "T18n0853_003:0160a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南引吽吽地法界種子𠻱二合，是塵義地𠻱二合唧𠻱二合，諸障不生唧𠻱二合娑嚩二合賀無能勝妃真言曰女形，於因得自在，二十五有自不生，常於三有而不動，如來住寶處三昧，化種種隨類身：",
        "from": "T18n0853_003:0160a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「次於東北方，　　布列淨居眾，",
        "from": "T18n0853_003:0160a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在思惟手側頭就手，　　普華風火差火入胸前側，",
        "from": "T18n0853_003:0160a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光鬘空在掌，　　滿意空風華，",
        "from": "T18n0853_003:0160a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍音空加水，　　火風以掩耳兩耳。",
        "from": "T18n0853_003:0160a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」自在天子真言曰從清淨法生，非同世天從業生。",
        "from": "T18n0853_003:0160a20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨心思惟勝妙手，離垢妙端嚴，微妙適悅眾生心：",
        "from": "T18n0853_003:0160a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引唵播囉儞怛麼二合囉底毘藥二合娑嚩二　賀普華天子真言曰散右手風捻火背，空持火側文，地水稍屈印胸前：",
        "from": "T18n0853_003:0160a24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引摩弩囉達摩麼糝婆嚩尾婆嚩迦託迦託那糝糝忙縒泥娑嚩二合賀光鬘天子真言曰右空入掌散諸輪：",
        "from": "T18n0853_003:0160a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引惹覩鄔姹二合寫難娑嚩二合賀滿意天子真言曰空捻風側當前獻華勢，滿意梵眾生。",
        "from": "T18n0853_003:0160b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等皆從梵天生，不見怨眾，如來所生亦如是：",
        "from": "T18n0853_003:0160b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南阿唵哿聹恥毘藥二合娑嚩賀我等皆依佛心生，不見如來有終始，名為出世大慈父遍音天子真言曰慧手側掌屈三輪，令此音聲普遍知，法界諸天極歡喜：",
        "from": "T18n0853_003:0160b06_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「行者於東隅，　　而作火仙像，",
        "from": "T18n0853_003:0160b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於熾焰中，　　三點灰為標，",
        "from": "T18n0853_003:0160b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身色皆深赤，　　心置三角印，",
        "from": "T18n0853_003:0160b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧珠定操瓶，　　掌印定持杖，",
        "from": "T18n0853_003:0160b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青羊以為座。",
        "from": "T18n0853_003:0160b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆藪仙仙妃，　　阿詣羅瞿曇，",
        "from": "T18n0853_003:0160b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿底哩與仙，　　及毘哩瞿仙。",
        "from": "T18n0853_003:0160b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次置自在女，　　毘紐夜摩女，",
        "from": "T18n0853_003:0160b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢摩羯二魚，　　羅睺阿伽羅，",
        "from": "T18n0853_003:0160b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大主訶悉多。",
        "from": "T18n0853_003:0160b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七曜眾問錯，　　自記質多羅，",
        "from": "T18n0853_003:0160b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果得尾舍佉，　　藥叉持明眾。",
        "from": "T18n0853_003:0160b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次增長天王，　　南門難陀龍，",
        "from": "T18n0853_003:0160b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏波大龍王，　　并二修羅王，",
        "from": "T18n0853_003:0160b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近門黑暗天。",
        "from": "T18n0853_003:0160b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手持檀拏印，　　水牛以為座，",
        "from": "T18n0853_003:0160b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震雷玄雲色，　　七母并黑夜，",
        "from": "T18n0853_003:0160b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死后妃圍繞。",
        "from": "T18n0853_003:0160b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼眾拏吉尼，　　成就大仙眾，",
        "from": "T18n0853_003:0160b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼阿修羅，　　及阿修羅眾，",
        "from": "T18n0853_003:0160b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金翅王并女準九頭龍印，　　鳩盤荼及女。",
        "from": "T18n0853_003:0160b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火天空在掌，　　嚩思等仙印，",
        "from": "T18n0853_003:0160c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空持水二節，　　次第開敷遍先開頭指。",
        "from": "T18n0853_003:0160c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焰魔定慧合，　　地風雙入月。",
        "from": "T18n0853_003:0160c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七母三昧拳，　　抽空竪鎚印於心。",
        "from": "T18n0853_003:0160c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暗夜三昧拳，　　風火竝皆申空押地水上。",
        "from": "T18n0853_003:0160c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焰魔妃后鐸，　　慧手垂五輪，",
        "from": "T18n0853_003:0160c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如健吒相。",
        "from": "T18n0853_003:0160c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　荼吉尼定掌。",
        "from": "T18n0853_003:0160c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾賀嚩觸之。",
        "from": "T18n0853_003:0160c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」火天真言曰定印掌當心，火空相捻如三角形，慧豎四輪，空橫掌中，風屈三召：",
        "from": "T18n0853_003:0160c09_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引阿擬曩二合曳娑嚩二合賀火天后真言曰：",
        "from": "T18n0853_003:0160c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引阿起禰曳娑嚩二合賀嚩斯仙真言曰：",
        "from": "T18n0853_003:0160c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引嚩斯瑟吒二合㗚釤二合娑嚩二合賀阿跌哩仙真言曰：",
        "from": "T18n0853_003:0160c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱喃引惡帝囉二合也摩賀㗚釤二合娑嚩二合賀尾哩瞿仙真言曰：",
        "from": "T18n0853_003:0160c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命比哩俱多麼二合摩訶㗚釤二合娑嚩二合賀驕答摩仙真言曰：",
        "from": "T18n0853_003:0160c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引婆哩二合輸怛摩二合摩訶㗚釤二合娑嚩二合賀蘖栗伽仙真言曰：",
        "from": "T18n0853_003:0160c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引俱怛摩二合摩訶㗚釤二合蘖㗚伽二合娑嚩二合賀增長天王真言曰二羽背相合，火輪鉤如索，地風空屈如鉤，左手持刀，右把矟根著地：",
        "from": "T18n0853_003:0161a01_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南引唵尾嚕𠻬迦二　藥乞叉二合地跛多曳三　娑嚩二合賀閻魔王真言曰住無縛三昧，能解眾生縛，不以非法治，罪福無錯謬，離言絕戲論，乘如法王位，生死中自在。",
        "from": "T18n0853_003:0161a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引嚩無背反，種子嚩堅住娑嚩二合多野二合娑嚩賀死王真言曰：",
        "from": "T18n0853_003:0161a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南引沒哩二合，種子底野二合吠此死義、殺義，斷根本名殺。",
        "from": "T18n0853_003:0161a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意斷一切眾生煩惱，於法自在娑嚩二合賀焰摩七母真言曰有七姊妹遮悶拏嬌摩哩等：",
        "from": "T18n0853_003:0161a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引忙種子底哩二合毘藥二合娑婆賀暗夜神真言曰焰摩侍后也，鬼魅所行處，有情多恐怖，此神於夜中加護與安樂。",
        "from": "T18n0853_003:0161a14_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生虛妄業，迷失墮稠林，如來於中夜，成佛為照明：",
        "from": "T18n0853_003:0161a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引迦攞黑也囉底哩二合曳夜娑嚩二合賀焰摩后真言曰：",
        "from": "T18n0853_003:0161a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南引麼哩二合怛野二合吠娑嚩二合賀奉教官真言曰：",
        "from": "T18n0853_003:0161a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南引只怛囉二合虞鉢多二合野娑嚩二合賀拏吉尼真言曰離因無垢空三昧：",
        "from": "T18n0853_003:0161a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引頡唎二合訶上字離因無垢，上有三昧，傍點亦忿怒也。",
        "from": "T18n0853_003:0161a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「泥哩底方主，　　號名大羅剎，",
        "from": "T18n0853_003:0161a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執刀恐怖形慧刀。",
        "from": "T18n0853_003:0161a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮合水入月，　　風竪空火交，",
        "from": "T18n0853_003:0161a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及羅剎女等。",
        "from": "T18n0853_003:0161b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」羅剎主真言曰左手空捻地水甲，火風並竪：",
        "from": "T18n0853_003:0161b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引囉引吃察二合娑食娑是竪義也，囉是垢，傍有點是菩提，亦是能食也。",
        "from": "T18n0853_003:0161b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿聲即是行也。",
        "from": "T18n0853_003:0161b04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吃察是履空也地法界三昧跛跢王也曳住也，指其德也，令彼聞已歡喜，滿眾願也娑嚩二合賀羅剎斯真言曰：",
        "from": "T18n0853_003:0161b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱喃引𡀩乞剎二合娑誐尼弭娑嚩二合賀羅剎眾真言曰：",
        "from": "T18n0853_003:0161b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「西門內左右，　　忿怒無能勝，",
        "from": "T18n0853_003:0161b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿毘目佉對，　　難徒跋難徒，",
        "from": "T18n0853_003:0161b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以諸地神，　　龍王嚩嚕拏，",
        "from": "T18n0853_003:0161b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天形女人狀，　　龍光龜為座，",
        "from": "T18n0853_003:0161b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍眾自圍繞。",
        "from": "T18n0853_003:0161b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "店對生大光，　　寂蝎弓秤宮，",
        "from": "T18n0853_003:0161b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月耀及女天，　　男天摩奴赦，",
        "from": "T18n0853_003:0161b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮文鳩摩利，　　釋梵二女天，",
        "from": "T18n0853_003:0161b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在烏摩妃。",
        "from": "T18n0853_003:0161b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣目天龍眾，　　龍王妃眷屬，",
        "from": "T18n0853_003:0161b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那羅毘紐妃，　　辯才塞建曩，",
        "from": "T18n0853_003:0161b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月妃戰捺羅，　　鼓天歌天女，",
        "from": "T18n0853_003:0161b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歌天樂天眾，　　風天并眷屬，",
        "from": "T18n0853_003:0161b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天使并妃等。",
        "from": "T18n0853_003:0161b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　水天執羂索，諸龍覆散掌，　　二空互相絞。",
        "from": "T18n0853_003:0161b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二龍左右掌，　　更互而相加。",
        "from": "T18n0853_003:0161b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地神持寶瓶，　　辯才即妙音，",
        "from": "T18n0853_003:0161b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧風持於空，　　運動如奏樂。",
        "from": "T18n0853_003:0161b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼天費拏印，　　那羅延持輪，",
        "from": "T18n0853_003:0161c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定掌以舒散。",
        "from": "T18n0853_003:0161c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　后契空持風，圓滿如輪勢。",
        "from": "T18n0853_003:0161c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三首乘孔雀，　　商羯羅戟印，",
        "from": "T18n0853_003:0161c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定空加自地微屈三指，散空捻地甲為加對，合曰持。",
        "from": "T18n0853_003:0161c05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "后印空持地，　　妃密三輪開前竪。",
        "from": "T18n0853_003:0161c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮文荼內縛，　　火合安頂上。",
        "from": "T18n0853_003:0161c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月天三昧手或空捻火初節，應觀白月在華中，持於白蓮華。",
        "from": "T18n0853_003:0161c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縛庾風天幢，　　智拳地水竪空在內，",
        "from": "T18n0853_003:0161c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆眷屬圍繞。",
        "from": "T18n0853_003:0161c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」廣目天王真言曰二拳背相合，空押火輪甲，風交如索。",
        "from": "T18n0853_003:0161c12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左執鉤，右手把赤索：",
        "from": "T18n0853_003:0161c12_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引一　唵尾嚕博乞叉二合二　那伽地波跢曳三　娑嚩二合賀水天真言曰大海中龍王，諸龍王同此真言。",
        "from": "T18n0853_003:0161c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手作大海大龍王，一切智水大法雨而得自在，名為王：",
        "from": "T18n0853_003:0161c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引阿種子播哺甘反，水也鉢多主也曳助聲也娑嚩二合賀難陀拔難陀真言曰兄弟二龍王：",
        "from": "T18n0853_003:0161c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引難徒鉢難娜曳娑嚩二合賀諸龍真言曰前是龍王，此是諸龍，通用此真言。",
        "from": "T18n0853_003:0161c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍噉食雲，障萬像明，現大虛廓，然又起無盡雲普雨法雨。",
        "from": "T18n0853_003:0161c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或用索印右手：",
        "from": "T18n0853_003:0161c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引銘種子伽雲也捨儞喫噉曳娑嚩二合賀地神真言曰法寶生所依處，出過語言道，能令道場地堅固不傾動，生長佛心地，內證真如境，名鉢哩（二合）體微：",
        "from": "T18n0853_003:0161c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引鉢哩二合體丁以反吠曳二合，地神名，便為真言第三字種子娑嚩二合賀定慧密頭相跓，空其掌內奉瓶形妙音天真言曰即攝乾闥婆類。",
        "from": "T18n0853_003:0162a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左仰安臍下如琶琶，右散風空相捻運動淨淨法身，深入清淨妙法音，演出解脫聲，言詞柔美悅眾心，隨順說法度有情：",
        "from": "T18n0853_003:0162a02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引蘇上，種囉娑嚩二合帶曳二合，即美音名也娑嚩二合賀那羅延天真言曰：",
        "from": "T18n0853_003:0162a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱喃引尾瑟拏二合吠娑嚩二合賀后真言曰：",
        "from": "T18n0853_003:0162a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱喃引尾瑟拏二合弭娑嚩賀月天真言曰瑜伽圓滿淨圓實，體性遍清淨，普照於世間，能除極熱惱，施清淨法藥，甘露十六分，十五施有清，一分還生戰，謂無生滅淨月喻三昧。",
        "from": "T18n0853_003:0162a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱喃引戰種子捺囉二合，不死野娑嚩二合賀二十八宿真言曰：",
        "from": "T18n0853_003:0162a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱喃引唵阿上瑟吒二合尾孕二合設底喃諾乞察二合怛囉二合毘藥二合儞寧逸反曩𩕳去曳摘計吽惹娑嚩二合賀魔醯首羅天王真言曰二羽外相叉，左押右，直竪地風空成召，供養本天及一切賢聖：",
        "from": "T18n0853_003:0162a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引唵摩係引濕嚩二合囉野娑嚩賀烏摩妃真言曰：",
        "from": "T18n0853_003:0162a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引烏摩爾弭娑嚩二合賀遮文荼真言曰亦名伏魔印。",
        "from": "T18n0853_003:0162a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用此印，定手仰劫，波羅置口：",
        "from": "T18n0853_003:0162a25_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱喃引唵護嚕護嚕左門拏娑嚩二合賀風天真言曰以縛（引）入阿字，本來無縛真解脫，無言三昧畢竟空，空中旋轉無有礙，迷情堅執盡無餘，往返神通得自在，速度於有情：",
        "from": "T18n0853_003:0162a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「北方門內置，　　難陀烏波龍，",
        "from": "T18n0853_003:0162b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱肥羅并女。",
        "from": "T18n0853_003:0162b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋眾眷屬，　　明女歌樂天，",
        "from": "T18n0853_003:0162b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩睺羅樂天，　　摩睺羅伽眾，",
        "from": "T18n0853_003:0162b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就持明仙，　　持鬘并天眾，",
        "from": "T18n0853_003:0162b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他化兜率天，　　光音大光音。",
        "from": "T18n0853_003:0162b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門東毘沙門，　　吉祥功德天，",
        "from": "T18n0853_003:0162b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八大藥叉眾，　　持明仙仙女，",
        "from": "T18n0853_003:0162b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百藥愛才等，　　賢鉤本方曜，",
        "from": "T18n0853_003:0162b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并阿濕毘儞，　　多羅滿者百，",
        "from": "T18n0853_003:0162b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二屬天女，　　螃蟹師子眾，",
        "from": "T18n0853_003:0162b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大戰鬼太白，　　毘那夜迦等。",
        "from": "T18n0853_003:0162b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶迦羅天，　　多聞虛心合，",
        "from": "T18n0853_003:0162b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙地入掌交，　　空竪風側屈，",
        "from": "T18n0853_003:0162b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一寸不相著。",
        "from": "T18n0853_003:0162b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　左藥叉內縛，水竪二風屈。",
        "from": "T18n0853_003:0162b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　一切藥叉女，空入持地甲，　　散合三昧耶。",
        "from": "T18n0853_003:0162b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門東毘舍遮，　　內縛火輪圓。",
        "from": "T18n0853_003:0162b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前印火甲背。",
        "from": "T18n0853_003:0162b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　即名毘舍支。",
        "from": "T18n0853_003:0162b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又大藥叉印，　　內縛水竝二風屈。",
        "from": "T18n0853_003:0162b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」多聞天王真言曰八藥叉：",
        "from": "T18n0853_003:0162b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼跋陀羅寶賢（一）、布嚕那跋陀羅滿賢（二）、半只迦散支（三）、娑多祁哩（四）、醯摩縛多（五）、毘灑迦（六）、阿吒嚩迦（七）、半遮羅（八）：",
        "from": "T18n0853_003:0162b24_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引味室羅二合摩拏野娑嚩二合賀諸藥叉真言曰虛心合掌，火空相叉，二風如鉤形，水合竪。",
        "from": "T18n0853_003:0162b27_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能食噉無遺，迅速名藥叉，常食眾生無厭足。",
        "from": "T18n0853_003:0162b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是世尊弘誓願，常食眾生垢障，令住法界胎藏中：",
        "from": "T18n0853_003:0162b28_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引藥乞叉二合，藥是乘義，句是噉食義濕嚩二合羅自在，於食一切煩惱而自在，故為名娑嚩二合賀諸藥叉女真言曰二羽地空入掌，空捻地甲，風火水相捻散，由如三昧耶：",
        "from": "T18n0853_003:0162c02_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引藥訖叉二合，食尾儞也二合，大也，反明也達哩句云藥叉持明，尾是縛也，噉食縛也娑嚩二合賀諸毘舍遮真言曰極苦餓鬼常飢渴，熱惱所迫惡因緣，第一義諦離遷變，大悲不捨苦眾生：",
        "from": "T18n0853_003:0162c05_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱引喃引毘舍遮廁神蘖底丁以反，趣也，第一義趣不可得娑嚩二合賀諸毘舍支真言曰名毘舍紫儞（引）喃（引）：",
        "from": "T18n0853_003:0162c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「東北伊舍那，　　眷屬部多等，",
        "from": "T18n0853_003:0162c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戟印三昧拳，　　竪火風屈背。",
        "from": "T18n0853_003:0162c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」伊舍那天真言曰魔醯首羅化身：",
        "from": "T18n0853_003:0162c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引嚕為心捺羅二合，授與野本名為真言娑嚩二合賀諸步跢真言曰：",
        "from": "T18n0853_003:0162c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「東門帝釋天，　　安住妙高山，",
        "from": "T18n0853_003:0162c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶冠被瓔珞，　　手持獨股杵，",
        "from": "T18n0853_003:0162c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天眾自圍繞。",
        "from": "T18n0853_003:0162c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八馬車輅中，　　二妃在左右，",
        "from": "T18n0853_003:0162c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逝耶毘逝耶，　　摩利支在前。",
        "from": "T18n0853_003:0162c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識處空處天，　　無所非想天，",
        "from": "T18n0853_003:0162c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅牢神與后，　　器手天天后，",
        "from": "T18n0853_003:0162c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常醉喜面天，　　左右二守門，",
        "from": "T18n0853_003:0162c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并二守門女。",
        "from": "T18n0853_003:0162c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　持國大梵天，四禪五淨居。",
        "from": "T18n0853_003:0162c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　次木者作者，烏頭服米濕，　　增益不染等。",
        "from": "T18n0853_003:0163a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羊牛密夫婦，　　彗流星霹靂，",
        "from": "T18n0853_003:0163a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日天子眷屬。",
        "from": "T18n0853_003:0163a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　帝釋印內縛，二風申如針空竪。",
        "from": "T18n0853_003:0163a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　日天福智仰。",
        "from": "T18n0853_003:0163a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水入空持側。",
        "from": "T18n0853_003:0163a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　火輪欲相竝。",
        "from": "T18n0853_003:0163a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒二地輪合。",
        "from": "T18n0853_003:0163a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若三昧手，　　風地節相背，",
        "from": "T18n0853_003:0163a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水火自相持，　　空並置於心。",
        "from": "T18n0853_003:0163a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九執二羽合，　　空輪竝而申。",
        "from": "T18n0853_003:0163a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵天持紅蓮準月，　　三昧空持水。",
        "from": "T18n0853_003:0163a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明妃風加火，　　空持水中節。",
        "from": "T18n0853_003:0163a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾闥婆密印，　　內縛申水輪。",
        "from": "T18n0853_003:0163a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修羅以智手，　　風絞空輪上。",
        "from": "T18n0853_003:0163a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」定手如妙音天。",
        "from": "T18n0853_003:0163a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天若作事業印，單手作亦得。",
        "from": "T18n0853_003:0163a14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋天王真言曰或云內縛合豎空地恐錯，此福帝釋天因中，廣設百無遮大會。",
        "from": "T18n0853_003:0163a15_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大施主釋字，寂靜捨諸垢，本性無生淨心地，用表莊嚴淨法身：",
        "from": "T18n0853_003:0163a16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引鑠種子吃囉二合也增進也娑嚩二合賀持國天王真言曰右拳空竪風如鉤不相著，左準此，腕相交：",
        "from": "T18n0853_003:0163a19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引唵地㘑二合多羅瑟吒囉二合囉囉鉢囉二合末馱那二合娑嚩賀種種天衣嚴飾，左手垂下把刀，右手掌寶上出日天子真言曰世間謂利眾生，阿字不生，喻佛日三昧日出破諸暗，菩提心自然開，乘此真如實相日，大光遍照法界尊：",
        "from": "T18n0853_003:0163a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引阿儞怛也二合野娑嚩二合賀摩利支真言曰：",
        "from": "T18n0853_003:0163a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引摩利支娑嚩二合賀七曜十二宮神九執真言曰定慧手相合，空微屈，離火輪。",
        "from": "T18n0853_003:0163a29_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一趣是非人非鬼，能為恐怖人，時有名執曜，若近宿即合，取九執為定：",
        "from": "T18n0853_003:0163b01_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引蘖囉二合醯行也，垢因也濕嚩二合哩也二合，自在鉢囉二合鉢多得也孺底明也，諸曜麼野性也，於明性中而得自在，呼彼名得自在娑嚩二合賀梵天真言曰：",
        "from": "T18n0853_003:0163b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引鉢囉二合，種子惹一切眾生鉢多曳主娑嚩二合賀乾闥婆王真言曰清淨平等聲，演出言詞美妙音，所有聞者令歡喜：",
        "from": "T18n0853_003:0163b08_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引尾戍馱清淨義薩嚩二合囉音義嚩引係儞出義，言出清淨音也，皆是世間三昧也娑嚩二合賀諸阿脩羅王真言曰羅字離垢不可得：",
        "from": "T18n0853_003:0163b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引阿素囉邏延行也囉鵮囉鵮特菵二合耽沒囉二合鉢囉二合娑嚩二合賀摩睺羅伽真言曰名摩護羅誐：",
        "from": "T18n0853_003:0163b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引蘖囉藍尾囉隣娑嚩二合賀諸緊那羅真言曰：",
        "from": "T18n0853_003:0163b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引賀迦娑喃尾賀薩喃名枳那囉𠼶娑嚩二合賀諸人真言曰名摩努使也（二合）𠼶：",
        "from": "T18n0853_003:0163b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引壹車鉢㘕麼努麼曳迷娑嚩二合賀普世明妃真言曰普印：",
        "from": "T18n0853_003:0163b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃引路種子迦路迦世間也：",
        "from": "T18n0853_003:0163b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是暗暝義也羯囉野作也薩嚩禰嚩一切天也曩誐龍藥乞叉二合健達嚩阿素囉誐嚕拏金翅緊曩囉樂聲摩護羅誐大龍蛇眾儞等諸部攝訶哩二合捺野儞也二合：",
        "from": "T18n0853_003:0163b28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心也羯囉灑二合：",
        "from": "T18n0853_003:0163b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作明野攝八部等心尾質怛囉二合蘖底種種趣也娑嚩二合賀「祕密主！",
        "from": "T18n0853_003:0163c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是上首諸如來印，從如來信解生此等上首有如上所說諸印，乃至荼吉尼為後。",
        "from": "T18n0853_003:0163c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若廣窮部類眷屬，其數無邊，如廣本十萬偈所說。",
        "from": "T18n0853_003:0163c03_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并此本舉其上首，如提綱繩即同菩薩之幖幟，其數無量。",
        "from": "T18n0853_003:0163c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又祕密主！",
        "from": "T18n0853_003:0163c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至身分舉動住止，應知皆是密印。",
        "from": "T18n0853_003:0163c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌相所轉眾多言說，應知皆是真言若阿闍梨明解瑜伽、深達祕密之趣、能淨菩提心，以心淨故通達祕密法，故凡有所作皆為利益調伏眾生，隨所施為無不隨順佛之威儀，一切身分舉動施為無不是密印，所有言語皆是真言也。",
        "from": "T18n0853_003:0163c08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故祕密主！",
        "from": "T18n0853_003:0163c08_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言門修菩薩行諸菩薩已發菩提心，應當住如來地畫曼荼羅阿闍梨須體解密印真言等法，一一不違法則，久修瑜伽觀行，淨身口意業，體解平等三密法門之行，即是同諸佛菩薩，理事不違，善知次第，又不錯失，當知必大利不虛也若異此者，同謗諸佛菩薩越三昧耶，決定墮於惡趣一切如來所立本誓，為欲普為一切眾生，開佛知見令悉如我，方便立此法印。",
        "from": "T18n0853_003:0163c13_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如世間大王，嚴勅教令不可過越，為越者必獲重責也。",
        "from": "T18n0853_003:0163c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必順教典審求經法，又訪明師勿自誤耳。",
        "from": "T18n0853_003:0163c14_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不順法則徒費功夫，虛棄光景終無所成，徒招罪咎無所益也。",
        "from": "T18n0853_003:0163c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「所疑不淨者，　　皆觀囕字燒，",
        "from": "T18n0853_003:0163c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辦事加持身，　　十力明方食。",
        "from": "T18n0853_003:0163c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「淨意作念誦，　　功行數未終，",
        "from": "T18n0853_003:0163c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中間不應間，　　或語或須出，",
        "from": "T18n0853_003:0163c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或由於放逸，　　置使數不終，",
        "from": "T18n0853_003:0163c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便闕於成就。",
        "from": "T18n0853_003:0163c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "㘕字在舌端，　　或習部母明，",
        "from": "T18n0853_003:0163c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱語不為間。",
        "from": "T18n0853_003:0163c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘如蘇悉地，　　一一諸真言，",
        "from": "T18n0853_003:0163c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作心意念誦，　　出入息為二，",
        "from": "T18n0853_003:0163c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常第一相應，　　阿字布支分，",
        "from": "T18n0853_003:0163c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持滿三洛叉，　　普賢及文殊，",
        "from": "T18n0853_003:0164a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執金剛聖天，　　現前而摩頂。",
        "from": "T18n0853_003:0164a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者稽首禮，　　速奉閼伽水，",
        "from": "T18n0853_003:0164a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意生香華鬘，　　便得身清淨。",
        "from": "T18n0853_003:0164a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦分限畢，　　持珠安本處，",
        "from": "T18n0853_003:0164a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方入三摩地，　　食頃從定出，",
        "from": "T18n0853_003:0164a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結根本印，　　真言七遍已，",
        "from": "T18n0853_003:0164a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次陳虛空眼，　　奉獻香華等，",
        "from": "T18n0853_003:0164a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅意妙伽陀，　　閼伽及發願，",
        "from": "T18n0853_003:0164a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說救世加持，　　令法眼道遍，",
        "from": "T18n0853_003:0164a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切處久住，　　當合金剛掌，",
        "from": "T18n0853_003:0164a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨明遍觸身。",
        "from": "T18n0853_003:0164a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」十萬為一落叉，百萬為一俱胝，一俱胝為阿庾多，一阿庾多為一那由他，廣如《華嚴經》加持句真言曰：",
        "from": "T18n0853_003:0164a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「難堪忍大護，　　左旋解大界，",
        "from": "T18n0853_003:0164a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還呈三昧耶，　　頂上散開之。",
        "from": "T18n0853_003:0164a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心送於聖天，　　五輪投地禮，",
        "from": "T18n0853_003:0164a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當啟白聖眾，　　現在諸如來，",
        "from": "T18n0853_003:0164a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救世諸菩薩，　　不斷大乘教，",
        "from": "T18n0853_003:0164a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到殊勝位者，　　唯願聖天眾，",
        "from": "T18n0853_003:0164a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定證知我，　　各當隨所安，",
        "from": "T18n0853_003:0164a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後復垂哀赴。",
        "from": "T18n0853_003:0164a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」真言曰：",
        "from": "T18n0853_003:0164a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如前三密護，　　懺悔隨喜等，",
        "from": "T18n0853_003:0164b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟菩提心，　　而住薩埵身，",
        "from": "T18n0853_003:0164b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖力所加持，　　行願相應故。",
        "from": "T18n0853_003:0164b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持明傳本教，　　無越三昧耶，",
        "from": "T18n0853_003:0164b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順行於學處，　　悉地當現前。",
        "from": "T18n0853_003:0164b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我依大日教，　　開示瑜祇行，",
        "from": "T18n0853_003:0164b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修證殊勝福，　　普利諸有情。",
        "from": "T18n0853_003:0164b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大毘盧遮那成佛神變加持經蓮華胎藏菩提幢幖幟普通真言藏成就瑜伽卷下大毘盧遮那成就瑜伽三卷，法全阿闍梨住青龍寺而所撰集，故呼曰「青龍寺儀軌」。",
        "from": "T18n0853_003:0164b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此慈覺、智證、容睿三師之請來也。",
        "from": "T18n0853_003:0164b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但今所鋟，未決是孰師本。",
        "from": "T18n0853_003:0164b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依《安然錄》曰「睿與前本同，但以有注為異」，則宗睿之本也。",
        "from": "T18n0853_003:0164b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依一切奉教金剛言中注佉那佉那句，而曰「此四个字珍依經加」，是智證之本也。",
        "from": "T18n0853_003:0164b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又五言偈頌舊本一行四句，而今改為一行三句，意如《玄軌記》。",
        "from": "T18n0853_003:0164b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又其讎校而有未定，則冠注之，以俟後賢。",
        "from": "T18n0853_003:0164b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時正德二年星紀壬辰猛夏二十有一日武城靈雲寺沙門慧光識",
        "from": "T18n0853_003:0164b26_100",
        "context_with_next_sentence": false
    }
]