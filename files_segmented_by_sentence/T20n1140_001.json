[
    {
        "source_sentence": "佛說延壽妙門陀羅尼經",
        "from": "T20n1140_001:0587c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T20n1140_001:0587c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T20n1140_001:0587c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T20n1140_001:0587c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在摩伽陀國成正覺地金剛座大靈塔處普光明殿大菩提道場。",
        "from": "T20n1140_001:0587c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大聲聞眾千二百五十人俱。",
        "from": "T20n1140_001:0587c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰尊者舍利子。",
        "from": "T20n1140_001:0587c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者大目乾連。",
        "from": "T20n1140_001:0587c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者大迦旃延。",
        "from": "T20n1140_001:0587c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者大迦葉。",
        "from": "T20n1140_001:0587c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者阿難。",
        "from": "T20n1140_001:0587c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者羅睺羅。",
        "from": "T20n1140_001:0587c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者護國。",
        "from": "T20n1140_001:0587c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者離婆多。",
        "from": "T20n1140_001:0587c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者周利盤陀伽。",
        "from": "T20n1140_001:0587c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者憍梵波提。",
        "from": "T20n1140_001:0587c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者跋羅墮舍。",
        "from": "T20n1140_001:0587c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者迦留陀夷。",
        "from": "T20n1140_001:0587c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者阿泥嚕馱。",
        "from": "T20n1140_001:0587c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等尊者皆是大阿羅漢。",
        "from": "T20n1140_001:0587c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有無量無邊大菩薩眾。",
        "from": "T20n1140_001:0587c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰。",
        "from": "T20n1140_001:0587c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛幢菩薩摩訶薩。",
        "from": "T20n1140_001:0587c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藏菩薩摩訶薩。",
        "from": "T20n1140_001:0587c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手菩薩摩訶薩。",
        "from": "T20n1140_001:0587c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛步菩薩摩訶薩。",
        "from": "T20n1140_001:0587c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏菩薩摩訶薩。",
        "from": "T20n1140_001:0588a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等菩薩摩訶薩。",
        "from": "T20n1140_001:0588a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是賢劫中大菩薩眾。",
        "from": "T20n1140_001:0588a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T20n1140_001:0588a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大眾中從座而起。",
        "from": "T20n1140_001:0588a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣世尊前合掌頂禮。",
        "from": "T20n1140_001:0588a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言唯願如來應正等覺。",
        "from": "T20n1140_001:0588a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為利益安樂一切眾生故。",
        "from": "T20n1140_001:0588a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說延壽妙門陀羅尼正法。",
        "from": "T20n1140_001:0588a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼正法。",
        "from": "T20n1140_001:0588a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃與我及眾生。",
        "from": "T20n1140_001:0588a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作光明照。",
        "from": "T20n1140_001:0588a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為救護。",
        "from": "T20n1140_001:0588a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使彼一切惡魔伺求便者及諸惡等。",
        "from": "T20n1140_001:0588a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂惡心者瞋怒心者。",
        "from": "T20n1140_001:0588a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極惡心者罪業心者。",
        "from": "T20n1140_001:0588a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦惱心者不慈心者。",
        "from": "T20n1140_001:0588a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至天龍夜叉乾闥婆阿脩羅迦樓羅摩睺羅伽。",
        "from": "T20n1140_001:0588a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅剎部多毘舍遮必隷多鳩盤荼人及非人。",
        "from": "T20n1140_001:0588a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等諸惡心者皆不能侵。",
        "from": "T20n1140_001:0588a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復刀兵毒藥一切疾病亦不能為害。",
        "from": "T20n1140_001:0588a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復行住坐臥或語或默。",
        "from": "T20n1140_001:0588a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處救護安隱。",
        "from": "T20n1140_001:0588a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願為我等宣說延壽妙門陀羅尼。",
        "from": "T20n1140_001:0588a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故此陀羅尼有大威力。",
        "from": "T20n1140_001:0588a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承此威力我於如來。",
        "from": "T20n1140_001:0588a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常深尊重承事供養。",
        "from": "T20n1140_001:0588a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及救護一切眾生。",
        "from": "T20n1140_001:0588a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今為諸眾生作大利益。",
        "from": "T20n1140_001:0588a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故勸請世尊。",
        "from": "T20n1140_001:0588a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人求菩薩乘者。",
        "from": "T20n1140_001:0588a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此陀羅尼至心受持。",
        "from": "T20n1140_001:0588a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人當得如來覆護。",
        "from": "T20n1140_001:0588a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在戰陣鬪諍疾病中夭。",
        "from": "T20n1140_001:0588a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等難皆不能侵害。",
        "from": "T20n1140_001:0588a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即受金剛手菩薩請已。",
        "from": "T20n1140_001:0588a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚言善哉善哉金剛手。",
        "from": "T20n1140_001:0588a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚善甚善金剛手。",
        "from": "T20n1140_001:0588a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝為利益一切眾生至誠勸請。",
        "from": "T20n1140_001:0588a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽當為汝說延壽妙門陀羅尼正法。",
        "from": "T20n1140_001:0588a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手若有善男子善女人。",
        "from": "T20n1140_001:0588a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲為受持讀誦延壽妙門陀羅尼正法者。",
        "from": "T20n1140_001:0588a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須持誦如來灌頂陀羅尼。",
        "from": "T20n1140_001:0588a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說灌頂陀羅尼曰。",
        "from": "T20n1140_001:0588a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚕酤沒酤一嚕割羅末尼一滿馱儞三末里左末儞四末虎末虎里哥引莎引賀引五爾時世尊宣說如來灌頂陀羅尼已。",
        "from": "T20n1140_001:0588b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩摩訶薩言。",
        "from": "T20n1140_001:0588b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此如來灌頂陀羅尼。",
        "from": "T20n1140_001:0588b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生身器清淨。",
        "from": "T20n1140_001:0588b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後持誦延壽妙門陀羅尼。",
        "from": "T20n1140_001:0588b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得無障難功德成就。",
        "from": "T20n1140_001:0588b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說延壽妙門陀羅尼曰。",
        "from": "T20n1140_001:0588b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛𭔞切身下同他引一嚩日哩二合嚩日哩二合嚩日哩二合二嚩日囉二合達哩三嚩日囉二合嚩帝四嚩日囉二合嚩帝五嚩日囉二合嚩帝六作訖囉二合達哩七波哩提毘八儞毘哩九母哩割哩十虎虎哩十一傍誐哩十二毘毘十三哩哩始十四嚕嚕十五拶哩拶哩十六祖哩十七半拏哩引莎引賀引十八怛𭔞切身他曼抳儞十九誐誐哩尼二十曼拏儞二十一蘇鉢囉二合曼拏儞二十二曳引計引唧摩摩播波哥引哩尼夜二合引悉帝二合釤那引設儞鉢囉二合那舍儞莎引賀引二十三摩摩薩哩嚩二合播波鉢囉二合那引設儞二十四遏哥引羅沒哩二合怛踰二合鉢囉二合帝尸達儞二十五薩哩嚩二合設咄嚕二合儞嚩引囉尼二十六薩哩嚩二合訥莎鉢那二合鉢囉二合底尸達儞二十七怛𭔞他引曳引計引唧咄半音播引波哥引哩拏二十八悉帝二合釤那引設儞二十九尾那引設儞三十鉢囉一合拏引設儞三十一滿馱儞三十二親那儞三十三親那親那三十四尾哩引彌哩三十五喝怛儞引三十六嚩哩引嚩哩引三十七毘引禰毘禰三十八毘哩毘哩三十九頻禰頻禰四十阿波哩娑囉尼引四十一左囉左囉尼引四十二左囉哥引拏曳引四十三沒囉二合賀摩二合嚩引哩尼四十四印捺囉三合嚩帝四十五狄提引囉野尼四十六那謨引摩呬引說囉攞野儞四十七哩始畔惹仁左切下同儞四十八畔惹儞四十九哥引羅嚩引儞儞五十部引多嚩引儞儞五十一薩爹嚩引儞儞五十二薩爹割替引五十三薩摩嚩帝五十四蘇摩鉢囉二合毘引莎引賀引五十五摩摩禰引哩伽二合引喻瑟哥二合跢引野五十六怛𭔞他引五十七訶囉訶囉呬引際引莎引賀引五十八摩摩設咄嚕二合鉢囉二合底尸引達那跢引野五十九怛𭔞他引六十誐底多六十一鉢底多六十二阿曳那六十三阿哩昝仁感切鼻那六十四割哩二合割哩二合那儞六十五沒跢引拏儞六十六摩引哩誐二合引毘嚕喝儞六十七虎沙嚩帝六十八補沙嚩帝六十九呬哩呬哩七十拽他阿屹儞二合七十一拽他阿波蘭唧七十二拽他阿婆野七十三拽他引紇哩二合那野七十四末謨引波哩訥瑟吒二合七十五薩哩嚩二合訥瑟吒二合七十六鉢囉二合底尸達那跢引野七十七爾時世尊說是延壽妙門陀羅尼已。",
        "from": "T20n1140_001:0588c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩言。",
        "from": "T20n1140_001:0588c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此延壽妙門陀羅尼。",
        "from": "T20n1140_001:0588c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是過去諸佛正等正覺。",
        "from": "T20n1140_001:0588c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益一切眾生故。",
        "from": "T20n1140_001:0588c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常當受持為人宣說。",
        "from": "T20n1140_001:0588c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是過去諸佛互相隨喜發誠實誓。",
        "from": "T20n1140_001:0588c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦如是為欲利益一切眾生故。",
        "from": "T20n1140_001:0588c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼正法。",
        "from": "T20n1140_001:0588c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是語已。",
        "from": "T20n1140_001:0588c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於眉間放一大人相光。",
        "from": "T20n1140_001:0588c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普照十方一切佛剎。",
        "from": "T20n1140_001:0588c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼佛剎皆同一光。",
        "from": "T20n1140_001:0588c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光所照處諸佛世尊各離本土。",
        "from": "T20n1140_001:0588c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾之頃悉來至此娑婆世界。",
        "from": "T20n1140_001:0588c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲集如來說法之處。",
        "from": "T20n1140_001:0588c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是十方佛咸皆讚言。",
        "from": "T20n1140_001:0588c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉世尊釋迦牟尼佛。",
        "from": "T20n1140_001:0588c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益一切眾生故。",
        "from": "T20n1140_001:0588c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說延壽妙門陀羅尼正法。",
        "from": "T20n1140_001:0588c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸眾生作於明照。",
        "from": "T20n1140_001:0588c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使令歡喜俾得記念。",
        "from": "T20n1140_001:0588c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能除滅一切魔冤。",
        "from": "T20n1140_001:0588c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼如佛所說我亦受持。",
        "from": "T20n1140_001:0588c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次若有善男子善女人。",
        "from": "T20n1140_001:0588c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發至誠心常能受持此陀羅尼。",
        "from": "T20n1140_001:0589a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清旦時依法讀誦者。",
        "from": "T20n1140_001:0589a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人獲得二十種功德。",
        "from": "T20n1140_001:0589a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有愛藥如是功德者。",
        "from": "T20n1140_001:0589a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當懃精進依法讀誦。",
        "from": "T20n1140_001:0589a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上功德決定獲得。",
        "from": "T20n1140_001:0589a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何名為二十種功德。",
        "from": "T20n1140_001:0589a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者當持諸佛。",
        "from": "T20n1140_001:0589a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者承事供養諸佛。",
        "from": "T20n1140_001:0589a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者所有一切罪業悉皆消滅。",
        "from": "T20n1140_001:0589a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者深解妙法。",
        "from": "T20n1140_001:0589a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者獲得長壽六者名稱普聞七者獲大富貴。",
        "from": "T20n1140_001:0589a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者獲大勢力。",
        "from": "T20n1140_001:0589a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者常得無病。",
        "from": "T20n1140_001:0589a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者具大精進。",
        "from": "T20n1140_001:0589a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一者諸天見重。",
        "from": "T20n1140_001:0589a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二者諸佛憐愛。",
        "from": "T20n1140_001:0589a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三者獲得善行。",
        "from": "T20n1140_001:0589a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四者獲得善利。",
        "from": "T20n1140_001:0589a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五者當作光明。",
        "from": "T20n1140_001:0589a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六者令得歡喜。",
        "from": "T20n1140_001:0589a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七者令得記念。",
        "from": "T20n1140_001:0589a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八者身具相好。",
        "from": "T20n1140_001:0589a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九者獲無所畏。",
        "from": "T20n1140_001:0589a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十者具足一切善根。",
        "from": "T20n1140_001:0589a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次佛告金剛手菩薩。",
        "from": "T20n1140_001:0589a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言此即一切如來正等正覺最上祕密法陀羅尼章句。",
        "from": "T20n1140_001:0589a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼故我宣說。",
        "from": "T20n1140_001:0589a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善除一切魔冤。",
        "from": "T20n1140_001:0589a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛咸皆受持。",
        "from": "T20n1140_001:0589a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩發至誠心。",
        "from": "T20n1140_001:0589a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛合掌白言世尊。",
        "from": "T20n1140_001:0589a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今承佛神力。",
        "from": "T20n1140_001:0589a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲為一切眾生而作救護利益故。",
        "from": "T20n1140_001:0589a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦隨喜宣說延壽妙門陀羅尼章句。",
        "from": "T20n1140_001:0589a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若復有人至心受持。",
        "from": "T20n1140_001:0589a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清旦時依法讀誦。",
        "from": "T20n1140_001:0589a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人常得擁護。",
        "from": "T20n1140_001:0589a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至諸魔伺求便者而不能侵。",
        "from": "T20n1140_001:0589a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處常得安樂。",
        "from": "T20n1140_001:0589a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T20n1140_001:0589a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛𭔞他引一始詰始詰二哩唧哩唧三左左左左四苾苾苾苾五婆婆婆婆六嚕嚕嚕嚕七囉囉囉囉八𡁠𡁠𡁠𡁠九惹仁左切下同惹惹惹十屹哩二合屹哩二合屹哩二合屹哩二合十一屹囉二合屹囉二合屹囉二合屹囉二合十二紇哩二合紇哩二合紇哩二合紇哩二合十三訶訶訶訶十四摩摩摩摩十五訶那訶那十六薩哩嚩二合鉢囉二合爹哩體二合崗引十七捺訶捺訶十八薩哩嚩二合設咄嚕二合嚩十九鉢左鉢左二十薩哩嚩二合引呬帶室拏引莎引賀引二十一爾時世尊讚金剛手菩薩摩訶薩言。",
        "from": "T20n1140_001:0589b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉金剛手。",
        "from": "T20n1140_001:0589b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此延壽妙門陀羅尼最上成就。",
        "from": "T20n1140_001:0589b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為利益安樂一切眾生故。",
        "from": "T20n1140_001:0589b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦受持。",
        "from": "T20n1140_001:0589b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人以此延壽妙門陀羅尼正法。",
        "from": "T20n1140_001:0589b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清旦時依法讀誦及隨喜者。",
        "from": "T20n1140_001:0589b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人常得擁護增長壽命。",
        "from": "T20n1140_001:0589b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中有娑婆世界主大梵天王。",
        "from": "T20n1140_001:0589b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛合掌白佛言世尊。",
        "from": "T20n1140_001:0589b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦承佛神力。",
        "from": "T20n1140_001:0589b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜宣說延壽妙門陀羅尼正法。",
        "from": "T20n1140_001:0589b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於清旦時。",
        "from": "T20n1140_001:0589b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法讀誦受持者。",
        "from": "T20n1140_001:0589b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當於此善男子善女人。",
        "from": "T20n1140_001:0589b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處常當擁護令得安隱。",
        "from": "T20n1140_001:0589b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T20n1140_001:0589b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛𭔞他引一呬哩彌里唧里莎引賀引二沒囉二合賀摩二合莎哩引莎引賀引三沒囉二合賀摩二合鼻引莎引賀引四蘇婆儗引莎引賀引五補瑟波二合散悉多二引哩引莎引賀引六世尊若有善男子善女人。",
        "from": "T20n1140_001:0589b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此陀羅尼者。",
        "from": "T20n1140_001:0589b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切惡魔及諸鬼神等伺求便者。",
        "from": "T20n1140_001:0589b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使不得便。",
        "from": "T20n1140_001:0589b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處常當擁護。",
        "from": "T20n1140_001:0589b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今為欲利益安樂諸眾生故。",
        "from": "T20n1140_001:0589b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T20n1140_001:0589b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛𭔞他引一唧哩嚩囉尼二㮈摩蘭尼引三哩致致爾四慠哩巘馱引哩五薩哩引摩賀那挽多嚕尼六入嚩二合引囉引摩引里儞七作訖囉二合嚩引計引八設嚩哩引莎引賀引九爾時會中有毘沙門天王持國天王增長天王廣目天王等。",
        "from": "T20n1140_001:0589b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各向佛頂禮而白佛言。",
        "from": "T20n1140_001:0589b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我等四王承佛神力。",
        "from": "T20n1140_001:0589b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦欲利益安樂諸善男子善女人等。",
        "from": "T20n1140_001:0589b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜宣說延壽妙門陀囉尼。",
        "from": "T20n1140_001:0589b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼若復有人於清旦時。",
        "from": "T20n1140_001:0589c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發至誠心依法讀誦。",
        "from": "T20n1140_001:0589c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等四王常當擁護。",
        "from": "T20n1140_001:0589c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使無障礙令得安隱。",
        "from": "T20n1140_001:0589c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T20n1140_001:0589c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛𭔞他一補瑟閉二合引蘇補瑟閉二合引二度摩波哩賀引哩引三阿哩也二合鉢囉二合設悉帝二合引四扇引帝引五莽引誐羅也二合儞目訖帝二合引窣覩二合帝引窣覩二合帝引莎引賀引六爾時世尊即舒妙色右臂。",
        "from": "T20n1140_001:0589c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩大梵天王及護世四王頂。",
        "from": "T20n1140_001:0589c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作是言善哉善哉。",
        "from": "T20n1140_001:0589c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝大梵王及護世等。",
        "from": "T20n1140_001:0589c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利益安樂一切眾生故。",
        "from": "T20n1140_001:0589c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及為護持佛法。",
        "from": "T20n1140_001:0589c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善說如是陀羅尼微妙章句。",
        "from": "T20n1140_001:0589c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次佛告金剛手菩薩摩訶薩言。",
        "from": "T20n1140_001:0589c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T20n1140_001:0589c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發至誠心。",
        "from": "T20n1140_001:0589c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於清旦。",
        "from": "T20n1140_001:0589c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法讀誦。",
        "from": "T20n1140_001:0589c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等延壽妙門陀羅尼。",
        "from": "T20n1140_001:0589c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人當得一切如來加持擁護。",
        "from": "T20n1140_001:0589c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切天王龍王夜叉王阿脩羅王迦樓羅王乾闥婆王緊那羅王摩睺羅伽王持明天王。",
        "from": "T20n1140_001:0589c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切人非人等悉皆愛重。",
        "from": "T20n1140_001:0589c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處常當擁護獲得安隱。",
        "from": "T20n1140_001:0589c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經已。",
        "from": "T20n1140_001:0589c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手菩薩摩訶薩及諸聲聞。",
        "from": "T20n1140_001:0589c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至大梵護世一切天人阿脩羅乾闥婆人非人等。",
        "from": "T20n1140_001:0589c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T20n1140_001:0589c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說延壽妙門陀羅尼經",
        "from": "T20n1140_001:0589c22_100",
        "context_with_next_sentence": false
    }
]