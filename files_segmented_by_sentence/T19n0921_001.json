[
    {
        "source_sentence": "阿閦如來念誦供養法一卷",
        "from": "T19n0921_001:0015b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿",
        "from": "T19n0921_001:0015b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅國公食邑三千戶賜紫贈司空",
        "from": "T19n0921_001:0015b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮遍照尊　　我今依契經",
        "from": "T19n0921_001:0015b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略說阿閦佛　　修行念誦儀",
        "from": "T19n0921_001:0015b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者應當禮　　五方諸如來",
        "from": "T19n0921_001:0015b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡想虛空中　　遍滿如胡麻",
        "from": "T19n0921_001:0015b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即對一一佛　　盡心而懺悔",
        "from": "T19n0921_001:0015b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜及勸請　　我所積集福",
        "from": "T19n0921_001:0015b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向諸有情　　次即對本尊",
        "from": "T19n0921_001:0015b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當結跏坐　　端身應正直",
        "from": "T19n0921_001:0015b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉目離攀緣　　即起悲愍心",
        "from": "T19n0921_001:0015b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察無邊界　　初結三昧耶",
        "from": "T19n0921_001:0015b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦金剛輪　　滅除諸過咎",
        "from": "T19n0921_001:0015b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即當結甲印　　加持於五處",
        "from": "T19n0921_001:0015b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次作金剛橛　　堅牢道場地",
        "from": "T19n0921_001:0015b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結方隅界　　壇中觀大海",
        "from": "T19n0921_001:0015b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中想彌盧山　　上觀寶樓閣",
        "from": "T19n0921_001:0015b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閣上師子座　　種種供養具",
        "from": "T19n0921_001:0015b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾寶以莊嚴　　次結車輅印",
        "from": "T19n0921_001:0015b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想奉妙喜剎　　即靜虛空道",
        "from": "T19n0921_001:0015b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又結請寶車　　及以部心請",
        "from": "T19n0921_001:0015b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應作辟除　　及示三昧耶",
        "from": "T19n0921_001:0015c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結金剛網　　奉獻閼伽水",
        "from": "T19n0921_001:0015c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想浴無垢身　　復當奉尊座",
        "from": "T19n0921_001:0015c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第獻五供　　即結虛空藏",
        "from": "T19n0921_001:0015c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡於無邊界　　一一想雲海",
        "from": "T19n0921_001:0015c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以身親奉獻　　即當誦讚歎",
        "from": "T19n0921_001:0015c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或讚百八名　　即結部母印",
        "from": "T19n0921_001:0015c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持本所尊　　及護於自身",
        "from": "T19n0921_001:0015c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結本尊印　　即當捧珠鬘",
        "from": "T19n0921_001:0015c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持已頂戴　　諦住而念誦",
        "from": "T19n0921_001:0015c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入字輪觀　　以此殊勝福",
        "from": "T19n0921_001:0015c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向於有情　　即結本尊印",
        "from": "T19n0921_001:0015c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦部母明　　如前五供養",
        "from": "T19n0921_001:0015c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及讚本尊德　　即獻閼伽水",
        "from": "T19n0921_001:0015c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應結外院印　　左轉而解界",
        "from": "T19n0921_001:0015c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結寶車輅　　外撥而奉送",
        "from": "T19n0921_001:0015c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想尊還本宮　　重結三昧耶",
        "from": "T19n0921_001:0015c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五悔如前作　　即起隨自意",
        "from": "T19n0921_001:0015c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦大乘經　　或住三摩地",
        "from": "T19n0921_001:0015c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印塔思六念　　以福資悉地",
        "from": "T19n0921_001:0015c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名菩薩行行者入本尊精舍。",
        "from": "T19n0921_001:0015c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向東方䠒跪合掌。",
        "from": "T19n0921_001:0015c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦想一切如來諸大菩薩微塵數眾。",
        "from": "T19n0921_001:0015c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍十方界由如胡麻。",
        "from": "T19n0921_001:0015c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如對目前。",
        "from": "T19n0921_001:0015c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中復想五方如來。",
        "from": "T19n0921_001:0015c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各禮一拜。",
        "from": "T19n0921_001:0015c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮一切如來真言曰。",
        "from": "T19n0921_001:0015c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此真言　　作禮於諸佛",
        "from": "T19n0921_001:0015c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於十方剎　　禮事悉圓滿",
        "from": "T19n0921_001:0015c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即右膝著地合掌當心。",
        "from": "T19n0921_001:0016a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而懺諸咎。",
        "from": "T19n0921_001:0016a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從無始時來至于今身。",
        "from": "T19n0921_001:0016a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作眾罪十惡四重五無間等無量無邊。",
        "from": "T19n0921_001:0016a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今對一切諸佛大菩薩前。",
        "from": "T19n0921_001:0016a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深生悔恨發露陳。",
        "from": "T19n0921_001:0016a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺一懺已後更不復造。",
        "from": "T19n0921_001:0016a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔真言曰。",
        "from": "T19n0921_001:0016a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此真言　　實相理相應",
        "from": "T19n0921_001:0016a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸罪如枯草　　焚盡無有餘",
        "from": "T19n0921_001:0016a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應思惟。",
        "from": "T19n0921_001:0016a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來諸大菩薩緣覺聲聞。",
        "from": "T19n0921_001:0016a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸凡夫積集福智。",
        "from": "T19n0921_001:0016a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今盡隨喜。",
        "from": "T19n0921_001:0016a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如一切如來隨喜一切福智。",
        "from": "T19n0921_001:0016a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦如是隨喜。",
        "from": "T19n0921_001:0016a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜一切福智真言曰。",
        "from": "T19n0921_001:0016a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此真言　　諸佛及菩薩",
        "from": "T19n0921_001:0016a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二乘凡夫福　　獲殊勝隨喜",
        "from": "T19n0921_001:0016a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次諦觀。",
        "from": "T19n0921_001:0016a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來遍周法界初成正覺。",
        "from": "T19n0921_001:0016a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想己身處彼海會一一佛前。",
        "from": "T19n0921_001:0016a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠心勸請願諸如來哀愍我等轉無上法輪。",
        "from": "T19n0921_001:0016a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請轉法輪真言曰。",
        "from": "T19n0921_001:0016a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此明故　　一切諸如來",
        "from": "T19n0921_001:0016a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雜染清淨剎　　轉無上法輪",
        "from": "T19n0921_001:0016a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應勸請。",
        "from": "T19n0921_001:0016a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛如來不般涅槃。",
        "from": "T19n0921_001:0016a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸如來哀愍有情。",
        "from": "T19n0921_001:0016a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久住世間不般涅槃。",
        "from": "T19n0921_001:0016a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無量劫廣作利益。",
        "from": "T19n0921_001:0016b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請不般涅槃真言曰。",
        "from": "T19n0921_001:0016b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此真言　　一切諸如來",
        "from": "T19n0921_001:0016b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復住無量劫　　廣利益有情",
        "from": "T19n0921_001:0016b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者作是思惟。",
        "from": "T19n0921_001:0016b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今禮佛懺悔隨喜勸請。",
        "from": "T19n0921_001:0016b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言如是積集無量福智。",
        "from": "T19n0921_001:0016b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願皆迴向一切眾生。",
        "from": "T19n0921_001:0016b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛所稱讚殊勝悉地。",
        "from": "T19n0921_001:0016b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸有情皆得圓滿。",
        "from": "T19n0921_001:0016b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向發願真言曰。",
        "from": "T19n0921_001:0016b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此真言　　諦誠發勝願",
        "from": "T19n0921_001:0016b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生類　　速皆得悉地",
        "from": "T19n0921_001:0016b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者於本尊像前。",
        "from": "T19n0921_001:0016b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結跏趺坐或半跏或吉祥。",
        "from": "T19n0921_001:0016b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至輪王等隨意而坐。",
        "from": "T19n0921_001:0016b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想一切如來及諸菩薩金剛部眾。",
        "from": "T19n0921_001:0016b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起大悲愍。",
        "from": "T19n0921_001:0016b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔濟安樂一切有情。",
        "from": "T19n0921_001:0016b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願一切眾生速得無上菩提悉地。",
        "from": "T19n0921_001:0016b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結佛部印　　止觀虛心合",
        "from": "T19n0921_001:0016b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開掌定輔進　　惠輔於定側",
        "from": "T19n0921_001:0016b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專注於一緣　　思惟佛相好",
        "from": "T19n0921_001:0016b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言誦三遍　　置頂便散之",
        "from": "T19n0921_001:0016b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部三昧耶真言曰。",
        "from": "T19n0921_001:0016b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦結此印　　一切佛部眾",
        "from": "T19n0921_001:0016b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持於行者　　不違自本誓",
        "from": "T19n0921_001:0016b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮花部　　虛心作合掌",
        "from": "T19n0921_001:0016b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微開進念定　　即想觀自在",
        "from": "T19n0921_001:0016b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具相持蓮花　　而住瑜伽定",
        "from": "T19n0921_001:0016c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分明誦三遍　　頂右而散之",
        "from": "T19n0921_001:0016c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮花部三昧耶真言曰。",
        "from": "T19n0921_001:0016c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦結印故　　一切蓮花部",
        "from": "T19n0921_001:0016c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖眾來雲集　　本願而加持",
        "from": "T19n0921_001:0016c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛部　　止觀反相叉",
        "from": "T19n0921_001:0016c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘力三鈷形　　心想執金剛",
        "from": "T19n0921_001:0016c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威德手持杵　　具相身嚴飾",
        "from": "T19n0921_001:0016c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當誦三遍　　頂左而散之",
        "from": "T19n0921_001:0016c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛部三昧耶真言曰。",
        "from": "T19n0921_001:0016c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦及結印　　一切執金剛",
        "from": "T19n0921_001:0016c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆集來現前　　與願不違誓",
        "from": "T19n0921_001:0016c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結甲冑印　　二羽內相叉",
        "from": "T19n0921_001:0016c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念力並申合　　定輔如杵形",
        "from": "T19n0921_001:0016c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "額肩心及喉　　五處各一遍",
        "from": "T19n0921_001:0016c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟身威光　　熾盛遍圍遶",
        "from": "T19n0921_001:0016c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸魔及障者　　馳散不敢覩",
        "from": "T19n0921_001:0016c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛甲冑真言曰。",
        "from": "T19n0921_001:0016c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結甲印故　　遠離於諸障",
        "from": "T19n0921_001:0016c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能遮惡趣門　　亦護諸眾生",
        "from": "T19n0921_001:0017a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛輪　　大威德印契",
        "from": "T19n0921_001:0017a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽內相叉　　竪二念定力",
        "from": "T19n0921_001:0017a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二念糺定合　　二慧並申合",
        "from": "T19n0921_001:0017a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安契當於心　　誠心誦七遍",
        "from": "T19n0921_001:0017a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛輪真言曰。",
        "from": "T19n0921_001:0017a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此真言　　如再入輪壇",
        "from": "T19n0921_001:0017a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失念破三昧　　菩薩與聲聞",
        "from": "T19n0921_001:0017a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口二律儀　　四重五無間",
        "from": "T19n0921_001:0017a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是等諸罪障　　悉皆得清淨",
        "from": "T19n0921_001:0017a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當結地界　　進念互相交",
        "from": "T19n0921_001:0017a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信定慧竪合　　雙慧輔於地",
        "from": "T19n0921_001:0017a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三拍想下方　　熾成獨鈷杵",
        "from": "T19n0921_001:0017a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徹至金剛際　　想除地過患",
        "from": "T19n0921_001:0017a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛橛真言曰。",
        "from": "T19n0921_001:0017a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結地印故　　盡想道場內",
        "from": "T19n0921_001:0017a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成金剛地　　諸魔不得便",
        "from": "T19n0921_001:0017a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以微少功行　　速證三摩地",
        "from": "T19n0921_001:0017a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心不疲倦　　遠離於昏沈",
        "from": "T19n0921_001:0017a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛牆　　准前下方契",
        "from": "T19n0921_001:0017a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搩開二慧竪　　三匝而右旋",
        "from": "T19n0921_001:0017b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想金剛牆　　赫奕起威焰",
        "from": "T19n0921_001:0017b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍護於道場　　以成方隅界",
        "from": "T19n0921_001:0017b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛牆真言曰。",
        "from": "T19n0921_001:0017b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結牆印故　　諸魔及障者",
        "from": "T19n0921_001:0017b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦等　　四散而馳走",
        "from": "T19n0921_001:0017b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結大海印　　止觀仰相叉",
        "from": "T19n0921_001:0017b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成於海印　　當心而旋轉",
        "from": "T19n0921_001:0017b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應想成大海　　深廣無邊際",
        "from": "T19n0921_001:0017b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨八功德　　皆從法界生",
        "from": "T19n0921_001:0017b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大海真言曰。",
        "from": "T19n0921_001:0017b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結須彌印　　止觀內叉拳",
        "from": "T19n0921_001:0017b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言誦三遍　　即想妙高山",
        "from": "T19n0921_001:0017b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四寶而成就　　七金山圍遶",
        "from": "T19n0921_001:0017b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山頂想樓閣　　眾寶以莊嚴",
        "from": "T19n0921_001:0017b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須彌山真言曰。",
        "from": "T19n0921_001:0017b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結虛空藏　　明妃大密印",
        "from": "T19n0921_001:0017b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛縛　　進力如寶形",
        "from": "T19n0921_001:0017b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘度竪如幢　　止觀互相交",
        "from": "T19n0921_001:0017b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成供養儀　　次第修如是",
        "from": "T19n0921_001:0017b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想於殿中　　本尊與眷屬",
        "from": "T19n0921_001:0017b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各依花位座　　塗香及花鬘",
        "from": "T19n0921_001:0017b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香摩尼燈　　閼伽及賢瓶",
        "from": "T19n0921_001:0017b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊妙天飲食　　寶柱而行列",
        "from": "T19n0921_001:0017b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我功德力　　如來加持力",
        "from": "T19n0921_001:0017b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以法界力　　普供養而住",
        "from": "T19n0921_001:0017c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏大明妃真言曰。",
        "from": "T19n0921_001:0017c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦結此印　　虛空藏本尊",
        "from": "T19n0921_001:0017c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不越本願力　　皆成實供養",
        "from": "T19n0921_001:0017c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應結寶車　　止觀仰相叉",
        "from": "T19n0921_001:0017c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二定側相拄　　二慧輔定側",
        "from": "T19n0921_001:0017c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言誦三遍　　奉送本尊剎",
        "from": "T19n0921_001:0017c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉車輅真言曰。",
        "from": "T19n0921_001:0017c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者持香鑪　　即靜虛空道",
        "from": "T19n0921_001:0017c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言誦三遍　　壞裂魔羅網",
        "from": "T19n0921_001:0017c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靜治道路真言曰。",
        "from": "T19n0921_001:0017c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想七寶車　　眾寶蓋莊嚴",
        "from": "T19n0921_001:0017c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繒幡寶鈴鐸　　珠鬘遍交絡",
        "from": "T19n0921_001:0017c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量諸天樂　　不鼓自然鳴",
        "from": "T19n0921_001:0017c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆奏和雅音　　想至妙喜剎",
        "from": "T19n0921_001:0017c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊與眷屬　　乘此寶車輅",
        "from": "T19n0921_001:0017c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即當結請車　　准前車輅印",
        "from": "T19n0921_001:0017c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧力撥二念　　想車至於空",
        "from": "T19n0921_001:0017c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請上車輅真言曰。",
        "from": "T19n0921_001:0017c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結部心印　　止觀內相叉",
        "from": "T19n0921_001:0018a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左慧向身招　　三遍加來句",
        "from": "T19n0921_001:0018a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊與眷屬　　歡喜赴集會",
        "from": "T19n0921_001:0018a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "部心請真言曰。",
        "from": "T19n0921_001:0018a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此真言　　本尊與眷屬",
        "from": "T19n0921_001:0018a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜赴集會　　與願令成就",
        "from": "T19n0921_001:0018a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結辟除印　　止觀金剛形",
        "from": "T19n0921_001:0018a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當舉止羽　　外拓作辟除",
        "from": "T19n0921_001:0018a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸魔羅　　怖畏而馳走",
        "from": "T19n0921_001:0018a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除真言曰。",
        "from": "T19n0921_001:0018a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦及辟除　　諸有魔障者",
        "from": "T19n0921_001:0018a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從聖隱眾會　　奔馳而四散",
        "from": "T19n0921_001:0018a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即舉於觀羽　　作示三昧耶",
        "from": "T19n0921_001:0018a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖眾憶昔願　　復當赴集會",
        "from": "T19n0921_001:0018a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示三昧耶真言曰。",
        "from": "T19n0921_001:0018a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛網　　准前金剛牆",
        "from": "T19n0921_001:0018a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二慧捻定側　　右旋於頂上",
        "from": "T19n0921_001:0018a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成堅固網　　上方諸魔羅",
        "from": "T19n0921_001:0018a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有能侵惱　　修行速得成",
        "from": "T19n0921_001:0018a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛網真言曰。",
        "from": "T19n0921_001:0018a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結密縫印　　止掌輔觀背",
        "from": "T19n0921_001:0018b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二慧而申直　　真言誦三遍",
        "from": "T19n0921_001:0018b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右旋及上下　　心想金剛焰",
        "from": "T19n0921_001:0018b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密合方隅界　　威靈其處所",
        "from": "T19n0921_001:0018b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛火院真言曰。",
        "from": "T19n0921_001:0018b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應虔誠心　　奉獻閼伽水",
        "from": "T19n0921_001:0018b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持器當於額　　運想沐聖眾",
        "from": "T19n0921_001:0018b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉閼伽真言曰。",
        "from": "T19n0921_001:0018b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應獻花座　　二羽虛心合",
        "from": "T19n0921_001:0018b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進念定微屈　　運心而旋轉",
        "from": "T19n0921_001:0018b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊與眷屬　　想坐花臺上",
        "from": "T19n0921_001:0018b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一處本位　　觀念令分明",
        "from": "T19n0921_001:0018b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花座真言曰。",
        "from": "T19n0921_001:0018b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結塗香印　　觀掌向外竪",
        "from": "T19n0921_001:0018b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止羽握右觀　　心想塗香雲",
        "from": "T19n0921_001:0018b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍塗聖眾海塗香供養真言曰。",
        "from": "T19n0921_001:0018b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔結塗香印　　遍於印契中",
        "from": "T19n0921_001:0018b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量香天女　　各持塗香器",
        "from": "T19n0921_001:0018b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡於無邊剎　　供養佛聖眾",
        "from": "T19n0921_001:0018b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當獲得　　五分具法身",
        "from": "T19n0921_001:0018b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結花鬘印　　止觀仰相叉",
        "from": "T19n0921_001:0018b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二定屈如環　　慧輔定下節",
        "from": "T19n0921_001:0018b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想奉花鬘　　用獻聖眷屬",
        "from": "T19n0921_001:0018c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花鬘供養真言曰。",
        "from": "T19n0921_001:0018c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔結花鬘印　　遍於印契中",
        "from": "T19n0921_001:0018c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量花天女　　各持花鬘器",
        "from": "T19n0921_001:0018c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡於無邊剎　　供養佛聖眾",
        "from": "T19n0921_001:0018c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當獲得　　離染如蓮花",
        "from": "T19n0921_001:0018c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結焚香印　　二羽而仰掌",
        "from": "T19n0921_001:0018c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信進念竪背　　定慧側相拄",
        "from": "T19n0921_001:0018c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想燒香雲　　以奉聖眷屬",
        "from": "T19n0921_001:0018c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焚香供養真言曰。",
        "from": "T19n0921_001:0018c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔結焚香印　　遍於印契中",
        "from": "T19n0921_001:0018c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量香天女　　各持七寶爐",
        "from": "T19n0921_001:0018c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡於無邊剎　　供養佛聖眾",
        "from": "T19n0921_001:0018c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當獲得　　如來無礙智",
        "from": "T19n0921_001:0018c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結飲食契　　二羽虛心合",
        "from": "T19n0921_001:0018c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧力輔禪側　　狀如食器形",
        "from": "T19n0921_001:0018c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想飲食雲　　以奉聖眷屬",
        "from": "T19n0921_001:0018c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食供養真言曰。",
        "from": "T19n0921_001:0018c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔結飲食契　　遍於印契中",
        "from": "T19n0921_001:0019a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量諸天女　　各持寶食器",
        "from": "T19n0921_001:0019a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡彼無邊剎　　供養佛聖眾",
        "from": "T19n0921_001:0019a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當獲得　　法喜禪悅食",
        "from": "T19n0921_001:0019a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結燈明印　　觀羽密作拳",
        "from": "T19n0921_001:0019a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪念慧側輔　　真言誦三遍",
        "from": "T19n0921_001:0019a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想摩尼燈　　以奉聖眷屬",
        "from": "T19n0921_001:0019a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶燈供養真言曰。",
        "from": "T19n0921_001:0019a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讒結燈明印　　遍於印契中",
        "from": "T19n0921_001:0019a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量燈天女　　各持摩尼燈",
        "from": "T19n0921_001:0019a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡彼無邊剎　　供養佛聖眾",
        "from": "T19n0921_001:0019a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當獲得　　清淨五種眼",
        "from": "T19n0921_001:0019a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心悉周遍　　無量佛剎中",
        "from": "T19n0921_001:0019a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種而奉獻　　無邊供養儀",
        "from": "T19n0921_001:0019a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結虛空藏　　大菩薩密印",
        "from": "T19n0921_001:0019a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛縛　　二定如寶形",
        "from": "T19n0921_001:0019a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信進如幢剎　　二慧而合竪　　真言誦三遍",
        "from": "T19n0921_001:0019a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏真言曰。",
        "from": "T19n0921_001:0019a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即讚本所尊　　無量功德聚",
        "from": "T19n0921_001:0019a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或誦百八名　　歌詠聲供養",
        "from": "T19n0921_001:0019a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者於身中　　當心應觀察",
        "from": "T19n0921_001:0019a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿淨月輪　　專注令分明",
        "from": "T19n0921_001:0019a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上想金剛杵　　金色五智形",
        "from": "T19n0921_001:0019a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明遍流出　　照觸無邊界",
        "from": "T19n0921_001:0019b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "警覺魔羅宮　　廣大作佛事",
        "from": "T19n0921_001:0019b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此三麼地　　而成阿閦佛",
        "from": "T19n0921_001:0019b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具相觸地印　　眷屬以圍遶",
        "from": "T19n0921_001:0019b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結根本印　　加持於四處",
        "from": "T19n0921_001:0019b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無動如來真言曰。",
        "from": "T19n0921_001:0019b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結莽莫計　　部母大悲者",
        "from": "T19n0921_001:0019b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽內相叉　　信念慧如針",
        "from": "T19n0921_001:0019b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三遍加本尊　　即當護己身",
        "from": "T19n0921_001:0019b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦於一遍　　加持於五處",
        "from": "T19n0921_001:0019b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莽莫計真言曰。",
        "from": "T19n0921_001:0019b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜謨囉怛娜二合怛囉二合引夜野娜麼室戰二合拏嚩日囉二合引播拏曳摩訶藥叉細曩鉢跢曳唵矩蘭馱哩滿馱滿馱吽癹吒半音次結如來不動大身印。",
        "from": "T19n0921_001:0019b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦本明七遍。",
        "from": "T19n0921_001:0019b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大身真言曰。",
        "from": "T19n0921_001:0019b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應淨念珠　　二羽捧珠鬘",
        "from": "T19n0921_001:0019b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加三遍頂戴淨珠鬘真言曰。",
        "from": "T19n0921_001:0019b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結持念珠　　二羽半金剛",
        "from": "T19n0921_001:0019b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此持念珠　　真言誦三遍",
        "from": "T19n0921_001:0019c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持珠真言曰。",
        "from": "T19n0921_001:0019c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦本尊明　　身前觀尊相",
        "from": "T19n0921_001:0019c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身亦如是　　專注離散亂",
        "from": "T19n0921_001:0019c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以實相理　　與法身相應",
        "from": "T19n0921_001:0019c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言字分明　　不緩亦不急",
        "from": "T19n0921_001:0019c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或千或百八　　一數常准定",
        "from": "T19n0921_001:0019c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦當畢已　　捧珠於頂上",
        "from": "T19n0921_001:0019c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍數付部母　　復結三昧那",
        "from": "T19n0921_001:0019c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦本明三遍　　即入字輪觀",
        "from": "T19n0921_001:0019c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於心月輪上　　行列真言字",
        "from": "T19n0921_001:0019c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金色具威光　　思惟實相理",
        "from": "T19n0921_001:0019c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應觀唵字門　　諸法無流注",
        "from": "T19n0921_001:0019c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次念阿字門　　諸法本不生",
        "from": "T19n0921_001:0019c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三閦字門　　諸法無盡滅",
        "from": "T19n0921_001:0019c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四陛字門　　諸法無自性",
        "from": "T19n0921_001:0019c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五吽字門　　諸法無因緣",
        "from": "T19n0921_001:0019c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一真言字　　觀照法界性",
        "from": "T19n0921_001:0019c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從初至究竟　　注心勿令間",
        "from": "T19n0921_001:0019c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結部母印　　真言誦三遍",
        "from": "T19n0921_001:0019c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以歌詠音　　讚揚本尊德",
        "from": "T19n0921_001:0019c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重結五供養　　奉獻本所尊",
        "from": "T19n0921_001:0020a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復獻閼伽水　　慇勤求本願",
        "from": "T19n0921_001:0020a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心上中下　　如教獲悉地",
        "from": "T19n0921_001:0020a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結外院印　　右旋解諸界",
        "from": "T19n0921_001:0020a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結寶車輅　　及結部心印",
        "from": "T19n0921_001:0020a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "送尊皆外撥　　復結三部印",
        "from": "T19n0921_001:0020a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護身及五誨　　應當如前作",
        "from": "T19n0921_001:0020a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮佛隨意樂　　讀誦方廣乘",
        "from": "T19n0921_001:0020a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十法行感招　　無量無邊福",
        "from": "T19n0921_001:0020a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契經思六念　　皆以實相理",
        "from": "T19n0921_001:0020a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一應思惟　　相應瑜伽教",
        "from": "T19n0921_001:0020a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲除業障　　應當印佛塔",
        "from": "T19n0921_001:0020a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或沙及香泥　　皆安緣起偈",
        "from": "T19n0921_001:0020a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積數如經說　　終畢現奇特",
        "from": "T19n0921_001:0020a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修集念誦法　　以此勝福田",
        "from": "T19n0921_001:0020a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸有情　　速成阿閦佛",
        "from": "T19n0921_001:0020a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發遣真言曰用前車輅印三外撥三念。",
        "from": "T19n0921_001:0020a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此真言　　即成發遣尊",
        "from": "T19n0921_001:0020a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除萎花真言曰。",
        "from": "T19n0921_001:0020a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵濕微二合帝摩訶濕微二合帝佉引娜寧娑嚩二合引訶引次掃地真言曰。",
        "from": "T19n0921_001:0020a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵訶囉訶囉二𮒯穰古反引𦽆囉二合訶囉拏引耶娑嚩二合訶引塗地真言曰。",
        "from": "T19n0921_001:0020a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦囉引隷摩訶迦囉隷娑嚩二合引訶引阿閦如來念誦供養法一卷",
        "from": "T19n0921_001:0020a29_100",
        "context_with_next_sentence": false
    }
]