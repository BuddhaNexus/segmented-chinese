[
    {
        "source_sentence": "七佛俱胝佛母心大准提陀羅尼",
        "from": "T20n1078_001:0186b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法",
        "from": "T20n1078_001:0186b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐善無畏奉　詔譯",
        "from": "T20n1078_001:0186b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　獨部別行",
        "from": "T20n1078_001:0186b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􄖩那􄗰麼􄙺颯􆻤哆􈁀喃去聲􄙺三􄢦藐􇩀三􈎭勃􇧺佗􄑈俱􄓜胝􈁀喃去聲􄕗怛􇩊姪也二合􄕤他􇩂唵􄑼折􄙐戾􈇓主􄙐戾􄑽准􇧼提􅁥娑嚩二合􄚩訶總攝二十五部大曼荼羅尼印。",
        "from": "T20n1078_001:0186b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手無名指小指。",
        "from": "T20n1078_001:0186b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相叉於內。",
        "from": "T20n1078_001:0186b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指直竪相拄。",
        "from": "T20n1078_001:0186b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指屈。",
        "from": "T20n1078_001:0186b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "附二中指第一節。",
        "from": "T20n1078_001:0186b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二母指捻左右手無名指中節。",
        "from": "T20n1078_001:0186b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有召請。",
        "from": "T20n1078_001:0186b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指來去。",
        "from": "T20n1078_001:0186b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言此呪印能滅十惡五逆一切重罪。",
        "from": "T20n1078_001:0186b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就一切白法。",
        "from": "T20n1078_001:0186b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具戒清潔速得菩提。",
        "from": "T20n1078_001:0186b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在家人。",
        "from": "T20n1078_001:0186b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱不斷酒肉妻子。",
        "from": "T20n1078_001:0186b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但依我法無不成就。",
        "from": "T20n1078_001:0186b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若求成就先依壇法。",
        "from": "T20n1078_001:0186b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不同諸部廣修供養。",
        "from": "T20n1078_001:0186b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堀地香泥塗之所建立。",
        "from": "T20n1078_001:0186b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一面淨鏡未曾用者。",
        "from": "T20n1078_001:0186b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛像前月十五日夜。",
        "from": "T20n1078_001:0186b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力供養。",
        "from": "T20n1078_001:0186b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安悉香及清淨水。",
        "from": "T20n1078_001:0186b26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當靜心無所思惟。",
        "from": "T20n1078_001:0186b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結印誦呪。",
        "from": "T20n1078_001:0186b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪鏡一百八遍。",
        "from": "T20n1078_001:0186b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以囊匣盛鏡。",
        "from": "T20n1078_001:0186b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得將隨身。",
        "from": "T20n1078_001:0186b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後欲念誦但以此鏡。",
        "from": "T20n1078_001:0186b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於面前結印誦呪。",
        "from": "T20n1078_001:0186b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依鏡為壇即得成就。",
        "from": "T20n1078_001:0186c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言欲持此呪於十五日夜。",
        "from": "T20n1078_001:0186c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨澡浴著新淨衣。",
        "from": "T20n1078_001:0186c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向東方半跏正坐。",
        "from": "T20n1078_001:0186c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置鏡在前。",
        "from": "T20n1078_001:0186c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨有香華清淨水諸物。",
        "from": "T20n1078_001:0186c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當靜心絕思。",
        "from": "T20n1078_001:0186c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結印印於心上。",
        "from": "T20n1078_001:0186c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪一百八遍。",
        "from": "T20n1078_001:0186c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪時能使短命眾生還得增壽。",
        "from": "T20n1078_001:0186c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加摩羅疾尚得除差。",
        "from": "T20n1078_001:0186c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況餘病。",
        "from": "T20n1078_001:0186c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不消差無有是處。",
        "from": "T20n1078_001:0186c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若人一心靜思。",
        "from": "T20n1078_001:0186c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦滿二十萬遍四十六十萬遍。",
        "from": "T20n1078_001:0186c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世出世法無不稱遂。",
        "from": "T20n1078_001:0186c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若在家人。",
        "from": "T20n1078_001:0186c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平旦清水漱口。",
        "from": "T20n1078_001:0186c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未葷血時。",
        "from": "T20n1078_001:0186c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向東方對鏡結印。",
        "from": "T20n1078_001:0186c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪一百八遍。",
        "from": "T20n1078_001:0186c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是不斷四十九日。",
        "from": "T20n1078_001:0186c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有吉祥事。",
        "from": "T20n1078_001:0186c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准提菩薩令二聖者常隨其人。",
        "from": "T20n1078_001:0186c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心有所念皆於耳邊一一具說。",
        "from": "T20n1078_001:0186c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言短命多病眾生。",
        "from": "T20n1078_001:0186c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月十五日夜。",
        "from": "T20n1078_001:0186c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安悉香誦呪結印一百八遍。",
        "from": "T20n1078_001:0186c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔鬼失心野狐惡病。",
        "from": "T20n1078_001:0186c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆於鏡中現其本身。",
        "from": "T20n1078_001:0186c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺放隨意更再不來。",
        "from": "T20n1078_001:0186c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增壽無量。",
        "from": "T20n1078_001:0186c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若人無福德相。",
        "from": "T20n1078_001:0186c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求官不遷。",
        "from": "T20n1078_001:0186c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對鏡常誦此呪。",
        "from": "T20n1078_001:0186c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德官當能稱遂。",
        "from": "T20n1078_001:0186c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若人欲有所作。",
        "from": "T20n1078_001:0186c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當思惟准提聖者。",
        "from": "T20n1078_001:0186c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念此呪具滿七遍端身。",
        "from": "T20n1078_001:0186c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少頃其身自然搖動。",
        "from": "T20n1078_001:0186c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即知能遂及以吉慶。",
        "from": "T20n1078_001:0186c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若身剛強向前向後。",
        "from": "T20n1078_001:0186c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即知不遂必有災難。",
        "from": "T20n1078_001:0186c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言欲知此法成不成。",
        "from": "T20n1078_001:0186c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法誦呪具滿七日。",
        "from": "T20n1078_001:0186c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便於夢中見佛菩薩及以華菓。",
        "from": "T20n1078_001:0186c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口吐黑物後喫白物。",
        "from": "T20n1078_001:0186c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即知成就。",
        "from": "T20n1078_001:0186c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言此陀羅尼有大勢力。",
        "from": "T20n1078_001:0186c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心誦持必當自證。",
        "from": "T20n1078_001:0186c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令枯樹生華。",
        "from": "T20n1078_001:0186c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況世間果報。",
        "from": "T20n1078_001:0186c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常誦持水火刀兵怨家毒藥皆不能害。",
        "from": "T20n1078_001:0187a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若卒為鬼神傷死。",
        "from": "T20n1078_001:0187a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印誦呪七遍。",
        "from": "T20n1078_001:0187a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印印心皆令却活。",
        "from": "T20n1078_001:0187a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍宅不安鬼神作禍。",
        "from": "T20n1078_001:0187a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪土四塊鎮之即去。",
        "from": "T20n1078_001:0187a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若人六親不和。",
        "from": "T20n1078_001:0187a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不相愛念。",
        "from": "T20n1078_001:0187a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法誦呪所向和合。",
        "from": "T20n1078_001:0187a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞名見身皆生歡喜。",
        "from": "T20n1078_001:0187a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所求無不遂心。",
        "from": "T20n1078_001:0187a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況能結齊具戒。",
        "from": "T20n1078_001:0187a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心清淨依法誦持。",
        "from": "T20n1078_001:0187a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不轉此身即證菩提有大功力。",
        "from": "T20n1078_001:0187a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若人欲長生。",
        "from": "T20n1078_001:0187a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於古塔及深山中。",
        "from": "T20n1078_001:0187a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或淨房內依鏡為壇。",
        "from": "T20n1078_001:0187a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具滿二四六十萬遍。",
        "from": "T20n1078_001:0187a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青蓮華和安悉香燒。",
        "from": "T20n1078_001:0187a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於睡夢中夢食仙藥。",
        "from": "T20n1078_001:0187a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或授仙方或於鏡中有五色光。",
        "from": "T20n1078_001:0187a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光中有藥隨意取食。",
        "from": "T20n1078_001:0187a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得長生。",
        "from": "T20n1078_001:0187a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若依法誦持一心精勤。",
        "from": "T20n1078_001:0187a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功力說不可盡。",
        "from": "T20n1078_001:0187a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此壇鏡法不得人見。",
        "from": "T20n1078_001:0187a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見即不好不成畢。",
        "from": "T20n1078_001:0187a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須密之此法不可說自當證知。",
        "from": "T20n1078_001:0187a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意所求速得成就受勝妙樂。",
        "from": "T20n1078_001:0187a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一校畢　　　　　　　　　　慈順",
        "from": "T20n1078_001:0187a17_0",
        "context_with_next_sentence": true
    }
]