{
    "T51n2067_001:0012b16_0": "弘贊法華傳卷第一",
    "T51n2067_001:0012b18_0": "藍谷沙門惠詳撰",
    "T51n2067_001:0012b19_0": "圖像第一　第一卷翻譯第二　第二卷講解第三　第三卷修觀第四　第四卷遺身第五　第五卷誦持第六(第六卷第七卷第八卷)轉讀第七　第九卷書寫第八　第十卷圖像第一西域祇洹寺寶珠寶塔內說此經像西域擬前說法金像西域鷲峯山說此經像宋釋惠豪造靈鷲山圖後魏太祖造耆闍崛山圖晉殷夫人造法華臺宋謝婕妤造法華寺後魏太常卿鄭瓊造法華堂晉釋惠力造多寶塔宋劉佛愛造多寶寺多寶塔齊舍人徐儼造石多寶塔唐悟真寺釋法誠造多寶塔法華塔(并)法華臺唐國子祭酒蕭璟造多寶塔宋路昭太后造普賢像宋釋道冏作普賢齋宋釋僧苞作普賢齋案祇洹圖云。",
    "T51n2067_001:0012c11_1": "前佛殿東樓上層。",
    "T51n2067_001:0012c11_2": "有白銀像。",
    "T51n2067_001:0012c11_3": "像內有七寶樓觀。",
    "T51n2067_001:0012c12_4": "樓觀內有寶池寶花。",
    "T51n2067_001:0012c12_5": "花上有白玉像。",
    "T51n2067_001:0012c13_6": "池中蓮花內。",
    "T51n2067_001:0012c13_7": "有白銀塔。",
    "T51n2067_001:0012c13_8": "於塔心中。",
    "T51n2067_001:0012c13_9": "有真珠塔。",
    "T51n2067_001:0012c14_10": "塔內有釋迦多寶二像。",
    "T51n2067_001:0012c14_11": "說法花經第七會者。",
    "T51n2067_001:0012c15_12": "又云。",
    "T51n2067_001:0012c15_13": "妙法華經。",
    "T51n2067_001:0012c15_14": "事同花嚴。",
    "T51n2067_001:0012c15_15": "波若多會說之。",
    "T51n2067_001:0012c16_16": "今之所翻。",
    "T51n2067_001:0012c16_17": "當第三會。",
    "T51n2067_001:0012c16_18": "又云。",
    "T51n2067_001:0012c16_19": "複殿四臺五重。",
    "T51n2067_001:0012c17_20": "上層有吠摩尼珠。",
    "T51n2067_001:0012c17_21": "此珠。",
    "T51n2067_001:0012c17_22": "過去諸佛。",
    "T51n2067_001:0012c17_23": "曾於中說法花。",
    "T51n2067_001:0012c18_24": "三變淨土。",
    "T51n2067_001:0012c18_25": "隨經所有。",
    "T51n2067_001:0012c18_26": "於中具現。",
    "T51n2067_001:0012c19_0": "案西域書傳。",
    "T51n2067_001:0012c19_1": "中天竺摩揭陀國恒河南有故城。",
    "T51n2067_001:0012c20_2": "周七十餘里。",
    "T51n2067_001:0012c20_3": "荒蕪歲久。",
    "T51n2067_001:0012c20_4": "基趾尚存。",
    "T51n2067_001:0012c20_5": "昔人壽無量歲時。",
    "T51n2067_001:0012c21_6": "號拘蘇摩補修羅城。",
    "T51n2067_001:0012c21_7": "唐言香花宮城。",
    "T51n2067_001:0012c22_8": "逮人壽數千歲時。",
    "T51n2067_001:0012c22_9": "更名波吒釐子城。",
    "T51n2067_001:0012c22_10": "是巴連弗邑也。",
    "T51n2067_001:0012c23_11": "去此城西南四百餘里。",
    "T51n2067_001:0012c23_12": "渡尼連禪河。",
    "T51n2067_001:0012c24_13": "至伽耶城。",
    "T51n2067_001:0012c24_14": "城西南二十餘里。",
    "T51n2067_001:0012c24_15": "至菩提樹。",
    "T51n2067_001:0012c24_16": "金剛座等。",
    "T51n2067_001:0012c25_17": "菩提樹東。",
    "T51n2067_001:0012c25_18": "渡大河入大林野。",
    "T51n2067_001:0012c25_19": "行百餘里。",
    "T51n2067_001:0012c26_20": "至鷄足山。",
    "T51n2067_001:0012c26_21": "鷄足山東北百餘里。",
    "T51n2067_001:0012c26_22": "至大山。",
    "T51n2067_001:0012c26_23": "入山東行六十餘里。",
    "T51n2067_001:0012c27_24": "至上茅宮城。",
    "T51n2067_001:0012c27_25": "此城即摩揭陀國之正中也。",
    "T51n2067_001:0012c28_26": "故先君王之所都。",
    "T51n2067_001:0012c28_27": "多出香茅。",
    "T51n2067_001:0012c29_0": "故以名之。",
    "T51n2067_001:0012c29_1": "崇山四圍。",
    "T51n2067_001:0012c29_2": "以為外郭。",
    "T51n2067_001:0012c29_3": "西通狹徑。",
    "T51n2067_001:0013a01_0": "北闢山門。",
    "T51n2067_001:0013a01_1": "周一百五十餘里。",
    "T51n2067_001:0013a01_2": "樹木春榮。",
    "T51n2067_001:0013a01_3": "皆作金色。",
    "T51n2067_001:0013a02_4": "初頻婆娑羅王。",
    "T51n2067_001:0013a02_5": "都此。",
    "T51n2067_001:0013a02_6": "城中編戶之民。",
    "T51n2067_001:0013a02_7": "頻遭火害。",
    "T51n2067_001:0013a03_8": "眾庶嗟怨。",
    "T51n2067_001:0013a03_9": "不安其居。",
    "T51n2067_001:0013a03_10": "因令國中。",
    "T51n2067_001:0013a03_11": "若有不謹。",
    "T51n2067_001:0013a04_12": "遷之寒林。",
    "T51n2067_001:0013a04_13": "寒林者。",
    "T51n2067_001:0013a04_14": "棄尸之所。",
    "T51n2067_001:0013a04_15": "俗謂不祥之地。",
    "T51n2067_001:0013a05_16": "須臾王宮先自失火。",
    "T51n2067_001:0013a05_17": "王謂臣曰。",
    "T51n2067_001:0013a05_18": "成其遷矣。",
    "T51n2067_001:0013a06_19": "遂令太子監國。",
    "T51n2067_001:0013a06_20": "躬出茅城西北四五里。",
    "T51n2067_001:0013a06_21": "因而舍之。",
    "T51n2067_001:0013a07_22": "時吠舍釐王。",
    "T51n2067_001:0013a07_23": "聞頻婆娑羅王野處寒林。",
    "T51n2067_001:0013a08_24": "整集戎旅。",
    "T51n2067_001:0013a08_25": "欲襲整不虞。",
    "T51n2067_001:0013a08_26": "邊候以聞。",
    "T51n2067_001:0013a08_27": "乃建城邑。",
    "T51n2067_001:0013a09_28": "以王先舍於此故。",
    "T51n2067_001:0013a09_29": "稱王舍城。",
    "T51n2067_001:0013a09_30": "官屬士庶。",
    "T51n2067_001:0013a10_0": "咸徒家焉。",
    "T51n2067_001:0013a10_1": "或云。",
    "T51n2067_001:0013a10_2": "是阿闍世王所立。",
    "T51n2067_001:0013a10_3": "至無憂王。",
    "T51n2067_001:0013a11_4": "遷都波吒釐城。",
    "T51n2067_001:0013a11_5": "以王舍城。",
    "T51n2067_001:0013a11_6": "施婆羅門。",
    "T51n2067_001:0013a11_7": "今此城中。",
    "T51n2067_001:0013a12_8": "無復凡庶。",
    "T51n2067_001:0013a12_9": "唯婆羅門減千家耳。",
    "T51n2067_001:0013a12_10": "茅城東北十四五里。",
    "T51n2067_001:0013a13_11": "至耆闍崛山。",
    "T51n2067_001:0013a13_12": "唐言鷲頭。",
    "T51n2067_001:0013a13_13": "亦云鷲峯。",
    "T51n2067_001:0013a14_14": "接北之陽。",
    "T51n2067_001:0013a14_15": "孤標特起。",
    "T51n2067_001:0013a14_16": "既棲鷲鳥。",
    "T51n2067_001:0013a14_17": "又類高臺。",
    "T51n2067_001:0013a15_18": "空翠相映。",
    "T51n2067_001:0013a15_19": "濃淡分色。",
    "T51n2067_001:0013a15_20": "如來御世。",
    "T51n2067_001:0013a15_21": "垂五十年。",
    "T51n2067_001:0013a16_22": "多居此山。",
    "T51n2067_001:0013a16_23": "廣說妙法。",
    "T51n2067_001:0013a16_24": "即說此經之處也。",
    "T51n2067_001:0013a16_25": "故經云。",
    "T51n2067_001:0013a17_26": "常在靈鷲山。",
    "T51n2067_001:0013a17_27": "及餘諸住處。",
    "T51n2067_001:0013a17_28": "佛在世時。",
    "T51n2067_001:0013a17_29": "頻婆娑羅王。",
    "T51n2067_001:0013a18_30": "為聞法故。",
    "T51n2067_001:0013a18_31": "興發人徒。",
    "T51n2067_001:0013a18_32": "自山麓至峯岑。",
    "T51n2067_001:0013a19_33": "跨谷淩巖。",
    "T51n2067_001:0013a19_34": "編石為階廣十餘步。",
    "T51n2067_001:0013a19_35": "長五六里。",
    "T51n2067_001:0013a20_0": "中路有二小塔。",
    "T51n2067_001:0013a20_1": "一名下乘。",
    "T51n2067_001:0013a20_2": "即王此徒行以進。",
    "T51n2067_001:0013a21_0": "一名退凡。",
    "T51n2067_001:0013a21_1": "即簡凡人。",
    "T51n2067_001:0013a21_2": "不令同往。",
    "T51n2067_001:0013a21_3": "其山頂。",
    "T51n2067_001:0013a21_4": "東西長南北狹。",
    "T51n2067_001:0013a22_5": "臨崖西垂。",
    "T51n2067_001:0013a22_6": "現有甎舍。",
    "T51n2067_001:0013a22_7": "高廣奇製。",
    "T51n2067_001:0013a23_0": "東闢其戶。",
    "T51n2067_001:0013a23_1": "如來在昔居中說法。",
    "T51n2067_001:0013a23_2": "今作說法之像。",
    "T51n2067_001:0013a24_3": "量等佛身。",
    "T51n2067_001:0013a24_4": "唐沙門玄奘。",
    "T51n2067_001:0013a24_5": "俗姓陳。",
    "T51n2067_001:0013a24_6": "洛陽人也。",
    "T51n2067_001:0013a25_7": "早歲出家。",
    "T51n2067_001:0013a25_8": "夙資慧解。",
    "T51n2067_001:0013a25_9": "遍師名匠。",
    "T51n2067_001:0013a25_10": "洞曉真詮。",
    "T51n2067_001:0013a26_11": "以為攀條者見微。",
    "T51n2067_001:0013a26_12": "挹流者識淺。",
    "T51n2067_001:0013a26_13": "乃殉軀命於絕域。",
    "T51n2067_001:0013a27_14": "馳丹素於幽極。",
    "T51n2067_001:0013a27_15": "以貞觀之初。",
    "T51n2067_001:0013a27_16": "發迹西邁。",
    "T51n2067_001:0013a28_17": "周旋往返一十七年。",
    "T51n2067_001:0013a28_18": "所獲經論。",
    "T51n2067_001:0013a28_19": "具如別記。",
    "T51n2067_001:0013a29_0": "於彼中天竺國。",
    "T51n2067_001:0013a29_1": "請得擬摩揭陀國鷲峯山說法花經金像一軀。",
    "T51n2067_001:0013b01_2": "通光座高三尺。",
    "T51n2067_001:0013b01_3": "色相超挺。",
    "T51n2067_001:0013b02_0": "妙絕人功。",
    "T51n2067_001:0013b02_1": "頂戴瞻仰。",
    "T51n2067_001:0013b02_2": "實萬恒倍。",
    "T51n2067_001:0013b02_3": "至止之後。",
    "T51n2067_001:0013b03_0": "摸寫無窮矣。",
    "T51n2067_001:0013b04_0": "宋景平元年。",
    "T51n2067_001:0013b04_1": "瓦官寺沙門帛惠高。",
    "T51n2067_001:0013b04_2": "造靈鷲寺。",
    "T51n2067_001:0013b05_0": "有沙門釋惠豪。",
    "T51n2067_001:0013b05_1": "智見通敏。",
    "T51n2067_001:0013b05_2": "巧思絕倫。",
    "T51n2067_001:0013b05_3": "於中製靈鷲山圖。",
    "T51n2067_001:0013b06_4": "奇變無方。",
    "T51n2067_001:0013b06_5": "欝似覩真。",
    "T51n2067_001:0013b06_6": "其山林禽獸之形。",
    "T51n2067_001:0013b07_7": "天龍八部之狀。",
    "T51n2067_001:0013b07_8": "歷代未有。",
    "T51n2067_001:0013b07_9": "自茲始出。",
    "T51n2067_001:0013b07_10": "龕成之後。",
    "T51n2067_001:0013b08_11": "傾國來觀。",
    "T51n2067_001:0013b08_12": "後世造龕。",
    "T51n2067_001:0013b08_13": "皆以豪為式。",
    "T51n2067_001:0013b08_14": "其龕東西深三十八丈。",
    "T51n2067_001:0013b09_15": "南北四十四丈四尺。",
    "T51n2067_001:0013b10_0": "後魏太祖道正皇帝拓跋珪。",
    "T51n2067_001:0013b10_1": "天興元年。",
    "T51n2067_001:0013b10_2": "造耆闍崛山圖一所。",
    "T51n2067_001:0013b11_3": "加以績飾。",
    "T51n2067_001:0013b11_4": "莫不嚴具焉。",
    "T51n2067_001:0013b12_0": "晉義熙七年。",
    "T51n2067_001:0013b12_1": "王荊州殷夫人。",
    "T51n2067_001:0013b12_2": "創造東青園寺。",
    "T51n2067_001:0013b13_0": "寺中造法花臺一所。",
    "T51n2067_001:0013b14_0": "宋元嘉十五年。",
    "T51n2067_001:0013b14_1": "謝婕妤。",
    "T51n2067_001:0013b14_2": "在秣陵縣。",
    "T51n2067_001:0013b14_3": "造法花寺。",
    "T51n2067_001:0013b16_0": "後魏太常卿恭侯鄭瓊。",
    "T51n2067_001:0013b16_1": "起淨域寺。",
    "T51n2067_001:0013b16_2": "建法花堂。",
    "T51n2067_001:0013b17_0": "晉興寧二年。",
    "T51n2067_001:0013b17_1": "沙門慧力。",
    "T51n2067_001:0013b17_2": "於瓦官寺。",
    "T51n2067_001:0013b17_3": "造石多寶塔一所。",
    "T51n2067_001:0013b19_0": "宋元嘉五年。",
    "T51n2067_001:0013b19_1": "彭城人劉佛愛。",
    "T51n2067_001:0013b19_2": "於建康。",
    "T51n2067_001:0013b19_3": "造多寶寺。",
    "T51n2067_001:0013b20_4": "又造多寶塔一所。",
    "T51n2067_001:0013b21_0": "齊建元元年。",
    "T51n2067_001:0013b21_1": "豫州刺史胡諧之。",
    "T51n2067_001:0013b21_2": "於鍾山。",
    "T51n2067_001:0013b21_3": "造法音寺。",
    "T51n2067_001:0013b22_4": "舍人徐儼助。",
    "T51n2067_001:0013b22_5": "造石多寶塔一所。",
    "T51n2067_001:0013b23_0": "唐藍田玉山悟真寺沙門法誠。",
    "T51n2067_001:0013b23_1": "少小出家。",
    "T51n2067_001:0013b23_2": "山居絕俗。",
    "T51n2067_001:0013b24_3": "持誦此經。",
    "T51n2067_001:0013b24_4": "過於萬遍。",
    "T51n2067_001:0013b24_5": "依經造多寶塔一所。",
    "T51n2067_001:0013b25_6": "法花堂一所。",
    "T51n2067_001:0013b25_7": "法花堂一所。",
    "T51n2067_001:0013b25_8": "法花臺一所。",
    "T51n2067_001:0013b26_9": "臺上致經。",
    "T51n2067_001:0013b26_10": "周旋禮懺。",
    "T51n2067_001:0013b26_11": "又造禪室。",
    "T51n2067_001:0013b26_12": "於中習定。",
    "T51n2067_001:0013b27_13": "甚多靈迹。",
    "T51n2067_001:0013b27_14": "具之後傳。",
    "T51n2067_001:0013b28_0": "唐國子祭酒蕭璟。",
    "T51n2067_001:0013b28_1": "蘭陵人。",
    "T51n2067_001:0013b28_2": "梁帝之玄孫。",
    "T51n2067_001:0013b28_3": "梁王巋之第五子也。",
    "T51n2067_001:0013b29_4": "梁滅入隋。",
    "T51n2067_001:0013b29_5": "姊為煬帝皇后。",
    "T51n2067_001:0013b29_6": "生長貴盛。",
    "T51n2067_001:0013c01_7": "而家崇信佛法。",
    "T51n2067_001:0013c01_8": "大業中。",
    "T51n2067_001:0013c01_9": "自誦法花經。",
    "T51n2067_001:0013c02_10": "乃依經文。",
    "T51n2067_001:0013c02_11": "作多寶塔。",
    "T51n2067_001:0013c02_12": "以檀香為之。",
    "T51n2067_001:0013c02_13": "塔高三尺許。",
    "T51n2067_001:0013c03_14": "并為木多寶像。",
    "T51n2067_001:0013c03_15": "經數年未就。",
    "T51n2067_001:0013c03_16": "其兄子銓。",
    "T51n2067_001:0013c04_17": "在宅。",
    "T51n2067_001:0013c04_18": "朝起。",
    "T51n2067_001:0013c04_19": "忽於前院草中。",
    "T51n2067_001:0013c04_20": "見一檀木浮圖。",
    "T51n2067_001:0013c05_21": "蓋下有一鍮石佛像。",
    "T51n2067_001:0013c05_22": "製作殊異。",
    "T51n2067_001:0013c05_23": "梵容威肅。",
    "T51n2067_001:0013c06_24": "其眼精。",
    "T51n2067_001:0013c06_25": "以銀為之。",
    "T51n2067_001:0013c06_26": "中黑精光淨。",
    "T51n2067_001:0013c06_27": "如自然者。",
    "T51n2067_001:0013c07_28": "銓怪。",
    "T51n2067_001:0013c07_29": "走告璟。",
    "T51n2067_001:0013c07_30": "璟視驚喜。",
    "T51n2067_001:0013c07_31": "取蓋還。",
    "T51n2067_001:0013c07_32": "試置多寶塔上。",
    "T51n2067_001:0013c08_33": "宛然相稱。",
    "T51n2067_001:0013c08_34": "如故作者。",
    "T51n2067_001:0013c08_35": "雖木色小異。",
    "T51n2067_001:0013c08_36": "而塔形更妙。",
    "T51n2067_001:0013c09_37": "以佛像安塔中。",
    "T51n2067_001:0013c09_38": "亦相稱如故造。",
    "T51n2067_001:0013c09_39": "璟喜歎。",
    "T51n2067_001:0013c10_40": "自以為精誠所感。",
    "T51n2067_001:0013c10_41": "其佛像衣內。",
    "T51n2067_001:0013c10_42": "有舍利百餘枚。",
    "T51n2067_001:0013c11_43": "璟女尼。",
    "T51n2067_001:0013c11_44": "等年少。",
    "T51n2067_001:0013c11_45": "竊疑舍利。",
    "T51n2067_001:0013c11_46": "鎚打不破。",
    "T51n2067_001:0013c12_47": "乃試取三十枚。",
    "T51n2067_001:0013c12_48": "於石上。",
    "T51n2067_001:0013c12_49": "以斧打之。",
    "T51n2067_001:0013c12_50": "舍利迸散。",
    "T51n2067_001:0013c13_51": "了無著者。",
    "T51n2067_001:0013c13_52": "女就地拾覓。",
    "T51n2067_001:0013c13_53": "唯得三四枚。",
    "T51n2067_001:0013c13_54": "餘並不見所在。",
    "T51n2067_001:0013c14_55": "既而懼。",
    "T51n2067_001:0013c14_56": "以告璟。",
    "T51n2067_001:0013c14_57": "璟往塔中視之。",
    "T51n2067_001:0013c14_58": "即舍利皆如在舊。",
    "T51n2067_001:0013c15_59": "璟從此。",
    "T51n2067_001:0013c15_60": "日誦法花經一遍。",
    "T51n2067_001:0013c15_61": "以至于終。",
    "T51n2067_001:0013c16_62": "貞觀十二年。",
    "T51n2067_001:0013c16_63": "病篤。",
    "T51n2067_001:0013c16_64": "蕭后。",
    "T51n2067_001:0013c16_65": "及弟姪視之。",
    "T51n2067_001:0013c17_66": "璟與相見。",
    "T51n2067_001:0013c17_67": "各令燃香。",
    "T51n2067_001:0013c17_68": "因即共別。",
    "T51n2067_001:0013c17_69": "唯留弟宋公瑀。",
    "T51n2067_001:0013c18_70": "及女為尼者。",
    "T51n2067_001:0013c18_71": "令燃香誦經。",
    "T51n2067_001:0013c18_72": "頃之。",
    "T51n2067_001:0013c18_73": "謂其尼曰。",
    "T51n2067_001:0013c19_74": "我欲去。",
    "T51n2067_001:0013c19_75": "普賢菩薩。",
    "T51n2067_001:0013c19_76": "來迎我在東院。",
    "T51n2067_001:0013c19_77": "師可迎之。",
    "T51n2067_001:0013c20_78": "尼如言往迎。",
    "T51n2067_001:0013c20_79": "未還。",
    "T51n2067_001:0013c20_80": "璟曰。",
    "T51n2067_001:0013c20_81": "此院不淨。",
    "T51n2067_001:0013c20_82": "不肯來。",
    "T51n2067_001:0013c21_83": "吾當往就。",
    "T51n2067_001:0013c21_84": "汝等好住。",
    "T51n2067_001:0013c21_85": "因與瑀等別。",
    "T51n2067_001:0013c21_86": "仍起。",
    "T51n2067_001:0013c22_0": "長跪合掌。",
    "T51n2067_001:0013c22_1": "正向西方。",
    "T51n2067_001:0013c22_2": "頃之遂絕。",
    "T51n2067_001:0013c22_3": "遺令。",
    "T51n2067_001:0013c22_4": "獨載一車。",
    "T51n2067_001:0013c23_5": "斂以在身之服。",
    "T51n2067_001:0013c23_6": "婦人不得送葬。",
    "T51n2067_001:0013c23_7": "勿以肉祭祀。",
    "T51n2067_001:0013c24_8": "坎纔令沒棺。",
    "T51n2067_001:0013c24_9": "朝野歎其通[雨/悟]。",
    "T51n2067_001:0013c24_10": "家人奉而行之。",
    "T51n2067_001:0013c25_11": "昔遍吉大士。",
    "T51n2067_001:0013c25_12": "神力無邊。",
    "T51n2067_001:0013c25_13": "現乘象王證明法花。",
    "T51n2067_001:0013c26_14": "斯或先佛之權應。",
    "T51n2067_001:0013c26_15": "或補處之垂化。",
    "T51n2067_001:0013c26_16": "七地莫測。",
    "T51n2067_001:0013c27_17": "二乘不思矣。",
    "T51n2067_001:0013c27_18": "夫上妙色身。",
    "T51n2067_001:0013c27_19": "既其明道。",
    "T51n2067_001:0013c27_20": "精微圖像。",
    "T51n2067_001:0013c28_21": "信亦感俗固有。",
    "T51n2067_001:0013c28_22": "沿形以悟神。",
    "T51n2067_001:0013c28_23": "因迹以觀本。",
    "T51n2067_001:0013c29_24": "喜見之相。",
    "T51n2067_001:0013c29_25": "實汲誘之關津也。",
    "T51n2067_001:0014a01_0": "宋崇憲路昭太后。",
    "T51n2067_001:0014a01_1": "植因曠劫。",
    "T51n2067_001:0014a01_2": "儷極皇家。",
    "T51n2067_001:0014a01_3": "而幻夢尊貴。",
    "T51n2067_001:0014a02_4": "塵垢賝寶。",
    "T51n2067_001:0014a02_5": "思隆正化。",
    "T51n2067_001:0014a02_6": "摹寫法身以大明四年。",
    "T51n2067_001:0014a03_7": "乃命白馬寺比丘曇標。",
    "T51n2067_001:0014a03_8": "造普賢菩薩像一軀。",
    "T51n2067_001:0014a04_9": "駕乘白象。",
    "T51n2067_001:0014a04_10": "六牙傭纖。",
    "T51n2067_001:0014a04_11": "七枝平滿。",
    "T51n2067_001:0014a04_12": "製度巨壯。",
    "T51n2067_001:0014a05_13": "鎔式精嚴。",
    "T51n2067_001:0014a05_14": "鑄比鍊銅。",
    "T51n2067_001:0014a05_15": "泥茲銑鋈。",
    "T51n2067_001:0014a05_16": "菩薩炳紫金之相。",
    "T51n2067_001:0014a06_17": "象王耀白銀之形。",
    "T51n2067_001:0014a06_18": "耀麗煌爍。",
    "T51n2067_001:0014a06_19": "狀若飛騰。",
    "T51n2067_001:0014a07_20": "實佛事之妙迹。",
    "T51n2067_001:0014a07_21": "塔廟之真規者也。",
    "T51n2067_001:0014a07_22": "而弘願不窮。",
    "T51n2067_001:0014a08_23": "修福無倦。",
    "T51n2067_001:0014a08_24": "到大明八年。",
    "T51n2067_001:0014a08_25": "又造普賢寺。",
    "T51n2067_001:0014a09_0": "壯麗之奇。",
    "T51n2067_001:0014a09_1": "將美莊嚴。",
    "T51n2067_001:0014a09_2": "釋道冏。",
    "T51n2067_001:0014a09_3": "扶風好濤人也。",
    "T51n2067_001:0014a10_0": "本姓馬氏。",
    "T51n2067_001:0014a10_1": "學業淳粹。",
    "T51n2067_001:0014a10_2": "弱齡有聲。",
    "T51n2067_001:0014a10_3": "初出家。",
    "T51n2067_001:0014a10_4": "為道懿弟子。",
    "T51n2067_001:0014a11_5": "冏素誦法花。",
    "T51n2067_001:0014a11_6": "唯憑誠此業。",
    "T51n2067_001:0014a11_7": "元嘉二年九月。",
    "T51n2067_001:0014a12_8": "在洛陽。",
    "T51n2067_001:0014a12_9": "為人作普賢齋。",
    "T51n2067_001:0014a12_10": "於是。",
    "T51n2067_001:0014a12_11": "澡雪庭除。",
    "T51n2067_001:0014a13_12": "表裏清淨。",
    "T51n2067_001:0014a13_13": "嚴遍吉之像。",
    "T51n2067_001:0014a13_14": "肅如在之心。",
    "T51n2067_001:0014a13_15": "道俗四十許人。",
    "T51n2067_001:0014a14_16": "已經七日。",
    "T51n2067_001:0014a14_17": "正就中食。",
    "T51n2067_001:0014a14_18": "忽有一人袴褶乘馬。",
    "T51n2067_001:0014a15_19": "入至室堂前。",
    "T51n2067_001:0014a15_20": "下馬禮佛。",
    "T51n2067_001:0014a15_21": "冏謂。",
    "T51n2067_001:0014a15_22": "常人不加禮異。",
    "T51n2067_001:0014a16_23": "此人登馬揮鞭。",
    "T51n2067_001:0014a16_24": "忽失所在。",
    "T51n2067_001:0014a16_25": "便見赤光赫然竟天。",
    "T51n2067_001:0014a17_26": "良久而滅。",
    "T51n2067_001:0014a17_27": "後三年十二月。",
    "T51n2067_001:0014a17_28": "在白衣家。",
    "T51n2067_001:0014a18_29": "復作普賢齋。",
    "T51n2067_001:0014a18_30": "將竟之夕。",
    "T51n2067_001:0014a18_31": "有二沙門。",
    "T51n2067_001:0014a18_32": "容眼如凡。",
    "T51n2067_001:0014a19_33": "直來禮佛。",
    "T51n2067_001:0014a19_34": "眾中謂是庸僧。",
    "T51n2067_001:0014a19_35": "不甚尊仰。",
    "T51n2067_001:0014a20_36": "聊問何居。",
    "T51n2067_001:0014a20_37": "答云。",
    "T51n2067_001:0014a20_38": "住在前村。",
    "T51n2067_001:0014a20_39": "時眾白衣。",
    "T51n2067_001:0014a20_40": "有張道。",
    "T51n2067_001:0014a21_41": "覺其有異。",
    "T51n2067_001:0014a21_42": "至心禮拜。",
    "T51n2067_001:0014a21_43": "沙門出門。",
    "T51n2067_001:0014a21_44": "行可數十步。",
    "T51n2067_001:0014a22_45": "忽飛空直上衝天。",
    "T51n2067_001:0014a22_46": "追目此僧。",
    "T51n2067_001:0014a22_47": "不復知所。",
    "T51n2067_001:0014a23_0": "後與同學四人南遊陽都。",
    "T51n2067_001:0014a23_1": "觀矚風化。",
    "T51n2067_001:0014a23_2": "夜乘氷渡河。",
    "T51n2067_001:0014a24_3": "中道氷破。",
    "T51n2067_001:0014a24_4": "三人沒死。",
    "T51n2067_001:0014a24_5": "冏又歸誠觀音。",
    "T51n2067_001:0014a24_6": "迺覺脚下如有一物自[敲高+危]。",
    "T51n2067_001:0014a25_7": "復見赤光在前。",
    "T51n2067_001:0014a25_8": "乘光至岸。",
    "T51n2067_001:0014a26_9": "建都。",
    "T51n2067_001:0014a26_10": "止南澗寺。",
    "T51n2067_001:0014a26_11": "常以般舟為業。",
    "T51n2067_001:0014a26_12": "甞中夜入禪。",
    "T51n2067_001:0014a27_13": "忽見四人御車至房。",
    "T51n2067_001:0014a27_14": "呼令上乘冏欻不自覺已見身在郡陵沈橋間。",
    "T51n2067_001:0014a28_15": "見一人在路座胡床。",
    "T51n2067_001:0014a29_16": "待者數百人。",
    "T51n2067_001:0014a29_17": "見冏驚起曰。",
    "T51n2067_001:0014a29_18": "坐禪人耳。",
    "T51n2067_001:0014b01_19": "彼人因謂左右曰。",
    "T51n2067_001:0014b01_20": "止向令知處而已。",
    "T51n2067_001:0014b01_21": "何忽勞屈法師。",
    "T51n2067_001:0014b02_22": "於是。",
    "T51n2067_001:0014b02_23": "禮拜執別。",
    "T51n2067_001:0014b02_24": "令人送冏還寺。",
    "T51n2067_001:0014b02_25": "扣門。",
    "T51n2067_001:0014b03_26": "良久方開。",
    "T51n2067_001:0014b03_27": "入寺見房猶閉。",
    "T51n2067_001:0014b03_28": "眾咸莫測其然。",
    "T51n2067_001:0014b04_0": "宋元嘉二十年。",
    "T51n2067_001:0014b04_1": "臨川康王義慶。",
    "T51n2067_001:0014b04_2": "携往廣陵。",
    "T51n2067_001:0014b04_3": "終於彼也。",
    "T51n2067_001:0014b06_0": "釋僧苞。",
    "T51n2067_001:0014b06_1": "京兆人。",
    "T51n2067_001:0014b06_2": "少在關。",
    "T51n2067_001:0014b06_3": "受業什公。",
    "T51n2067_001:0014b06_4": "宋永初中。",
    "T51n2067_001:0014b07_5": "遊北。",
    "T51n2067_001:0014b07_6": "徐入黃山精舍。",
    "T51n2067_001:0014b07_7": "於彼建三七日普賢齋。",
    "T51n2067_001:0014b08_8": "懺至十七日。",
    "T51n2067_001:0014b08_9": "有白鶴飛來。",
    "T51n2067_001:0014b08_10": "集普賢座前。",
    "T51n2067_001:0014b08_11": "至中行香畢乃去。",
    "T51n2067_001:0014b09_12": "至二十一日。",
    "T51n2067_001:0014b09_13": "又有黃衣四人。",
    "T51n2067_001:0014b10_0": "遶塔數匝。",
    "T51n2067_001:0014b10_1": "忽然不見。",
    "T51n2067_001:0014b11_0": "弘贊法華傳卷第一"
}