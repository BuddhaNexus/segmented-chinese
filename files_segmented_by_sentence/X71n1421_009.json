{
    "X71n1421_009:0692a16_0": "愚菴和尚語錄卷第九",
    "X71n1421_009:0692a18_0": "　　偈頌",
    "X71n1421_009:0692a19_0": "門人　護位　等編",
    "X71n1421_009:0692a20_0": "讀華嚴",
    "X71n1421_009:0692a21_0": "華嚴法界浩無邊。",
    "X71n1421_009:0692a21_1": "玉轉珠回滿目前。",
    "X71n1421_009:0692a21_2": "究竟直須超性海。",
    "X71n1421_009:0692a22_3": "精通猶是涴心田。",
    "X71n1421_009:0692a22_4": "不離當處該三德。",
    "X71n1421_009:0692a22_5": "曲說多方顯十玄。",
    "X71n1421_009:0692a23_6": "慚愧舍那尊特父。",
    "X71n1421_009:0692a23_7": "誑兒偏解奮空拳。",
    "X71n1421_009:0692a24_0": "讀法華",
    "X71n1421_009:0692b01_0": "六萬餘言最上乘。",
    "X71n1421_009:0692b01_1": "寒窻相對篆煙騰。",
    "X71n1421_009:0692b01_2": "無邊譬喻刀頭蜜。",
    "X71n1421_009:0692b02_3": "大事因緣火裏冰。",
    "X71n1421_009:0692b02_4": "彈指不妨開寶塔。",
    "X71n1421_009:0692b02_5": "焚身誰解繼真燈。",
    "X71n1421_009:0692b03_6": "循行數墨三千部。",
    "X71n1421_009:0692b03_7": "一句全超憶慧能。",
    "X71n1421_009:0692b04_0": "讀楞嚴",
    "X71n1421_009:0692b05_0": "諦觀佛頂首楞嚴。",
    "X71n1421_009:0692b05_1": "金口流珠顆顆圓。",
    "X71n1421_009:0692b05_2": "大定不離修萬行。",
    "X71n1421_009:0692b06_3": "密因先合斷三緣。",
    "X71n1421_009:0692b06_4": "毫端現剎難思議。",
    "X71n1421_009:0692b06_5": "眼處觀聲絕正偏。",
    "X71n1421_009:0692b07_6": "赤手果能探教海。",
    "X71n1421_009:0692b07_7": "得魚須信貴忘筌。",
    "X71n1421_009:0692b08_0": "讀楞伽",
    "X71n1421_009:0692b09_0": "大品楞伽奧旨深。",
    "X71n1421_009:0692b09_1": "止啼黃葉勝真金。",
    "X71n1421_009:0692b09_2": "了知我相元無我。",
    "X71n1421_009:0692b10_3": "直達心宗豈有心。",
    "X71n1421_009:0692b10_4": "兔角龜毛難比況。",
    "X71n1421_009:0692b10_5": "情波識浪任浮沈。",
    "X71n1421_009:0692b11_6": "百非四句俱拈却。",
    "X71n1421_009:0692b11_7": "蠓蠛蚍蜉解賞音。",
    "X71n1421_009:0692b12_0": "讀圓覺",
    "X71n1421_009:0692b13_0": "大圓覺海廣尤深。",
    "X71n1421_009:0692b13_1": "誰信真源近可尋。",
    "X71n1421_009:0692b13_2": "三觀澄明標匪月。",
    "X71n1421_009:0692b14_3": "六塵清淨鑛元金。",
    "X71n1421_009:0692b14_4": "却憐調御多饒舌。",
    "X71n1421_009:0692b14_5": "未許曼殊獨賞音。",
    "X71n1421_009:0692b15_6": "披卷只圖遮老眼。",
    "X71n1421_009:0692b15_7": "剋期修證本無心。",
    "X71n1421_009:0692b16_0": "血書華嚴經",
    "X71n1421_009:0692b17_0": "五十三人血戰來。",
    "X71n1421_009:0692b17_1": "百城煙水盡成衃。",
    "X71n1421_009:0692b17_2": "毗盧樓閣紅雲湧。",
    "X71n1421_009:0692b18_3": "帝網山河赤幟開。",
    "X71n1421_009:0692b18_4": "十指頭邊師子吼。",
    "X71n1421_009:0692b18_5": "一針鋒上象王回。",
    "X71n1421_009:0692b19_6": "有無功力難思識。",
    "X71n1421_009:0692b19_7": "直得腥風徧九垓。",
    "X71n1421_009:0692b20_0": "墨書法華",
    "X71n1421_009:0692b21_0": "松陵信士王元吉。",
    "X71n1421_009:0692b21_1": "夫婦同持妙法華。",
    "X71n1421_009:0692b21_2": "笑倒虗空多寶塔。",
    "X71n1421_009:0692b22_3": "驚飜露地白牛車。",
    "X71n1421_009:0692b22_4": "世緣未了曾何礙。",
    "X71n1421_009:0692b22_5": "寶所親登定不差。",
    "X71n1421_009:0692b23_6": "朵朵青蓮毫末現。",
    "X71n1421_009:0692b23_7": "腕頭餘力更堪誇。",
    "X71n1421_009:0692b24_0": "綉字金剛般若經",
    "X71n1421_009:0692c01_0": "般若靈文宿有緣。",
    "X71n1421_009:0692c01_1": "等閒綉出喜功圓。",
    "X71n1421_009:0692c01_2": "銀鉤鐵畫分行布。",
    "X71n1421_009:0692c02_3": "玉線金針顯妙玄。",
    "X71n1421_009:0692c02_4": "兔子懷胎皆剩法。",
    "X71n1421_009:0692c02_5": "蚌含明月匪真詮。",
    "X71n1421_009:0692c03_6": "金剛正體堂堂露。",
    "X71n1421_009:0692c03_7": "錦上添花五色鮮。",
    "X71n1421_009:0692c04_0": "秦因二上人。",
    "X71n1421_009:0692c04_1": "同書華嚴毫端幻出大華嚴。",
    "X71n1421_009:0692c05_2": "名句形身勝妙兼。",
    "X71n1421_009:0692c05_3": "寶網雲臺同演說。",
    "X71n1421_009:0692c06_4": "塵毛法界盡包含。",
    "X71n1421_009:0692c06_5": "眾生共入毗盧藏。",
    "X71n1421_009:0692c06_6": "梵苑雙敷優鉢曇。",
    "X71n1421_009:0692c07_7": "披卷了無文字相。",
    "X71n1421_009:0692c07_8": "善財空走百城南。",
    "X71n1421_009:0692c08_0": "藏主。",
    "X71n1421_009:0692c08_1": "職滿還吳今古何曾有悟迷。",
    "X71n1421_009:0692c09_2": "南屏嬾把布毛吹。",
    "X71n1421_009:0692c09_3": "山青雲白光明藏。",
    "X71n1421_009:0692c10_4": "鵲噪鴉鳴小艶詩。",
    "X71n1421_009:0692c10_5": "十里平湖秋澹澹。",
    "X71n1421_009:0692c10_6": "三吳歸路黍離離。",
    "X71n1421_009:0692c11_7": "莫嫌送別無分付。",
    "X71n1421_009:0692c11_8": "又是重安眼上眉。",
    "X71n1421_009:0692c12_0": "僧院判奉旨。",
    "X71n1421_009:0692c12_1": "降香育王寶陀。",
    "X71n1421_009:0692c12_2": "北歸。",
    "X71n1421_009:0692c12_3": "次雪窻和尚韻。",
    "X71n1421_009:0692c13_4": "以贈西河師子僧思吉。",
    "X71n1421_009:0692c14_5": "遠降天香跨海回。",
    "X71n1421_009:0692c14_6": "設利寶光開五色。",
    "X71n1421_009:0692c15_7": "洛伽大士舞三臺。",
    "X71n1421_009:0692c15_8": "孤峯頂上逢彌勒。",
    "X71n1421_009:0692c15_9": "百草頭邊識善財。",
    "X71n1421_009:0692c16_10": "聖主無為千萬壽。",
    "X71n1421_009:0692c16_11": "南方佛法未全灰。",
    "X71n1421_009:0692c17_0": "答訓書記。",
    "X71n1421_009:0692c17_1": "兼柬師林立卓峯撒土猶能更撒沙。",
    "X71n1421_009:0692c18_2": "難兄難弟喜通家。",
    "X71n1421_009:0692c18_3": "咬人師子全牙爪。",
    "X71n1421_009:0692c19_4": "逐塊韓盧曳尾巴。",
    "X71n1421_009:0692c19_5": "月下守株空待兔。",
    "X71n1421_009:0692c19_6": "棒頭打草要驚蛇。",
    "X71n1421_009:0692c20_7": "頹綱力振看能事。",
    "X71n1421_009:0692c20_8": "種豆何妨得稻麻。",
    "X71n1421_009:0692c21_0": "寶藏主還吳江",
    "X71n1421_009:0692c22_0": "法王大寶秘形山。",
    "X71n1421_009:0692c22_1": "覿面當機要見難。",
    "X71n1421_009:0692c22_2": "紙襖鈔來渾是錯。",
    "X71n1421_009:0692c23_3": "柴爿颺下太無端。",
    "X71n1421_009:0692c23_4": "神駒墮地萬里志。",
    "X71n1421_009:0692c23_5": "彩鳳衝霄五色翰。",
    "X71n1421_009:0692c24_6": "少室宗綱方解紐。",
    "X71n1421_009:0692c24_7": "未容高臥曲江干。",
    "X71n1421_009:0693a01_0": "無言",
    "X71n1421_009:0693a02_0": "始終一字不曾談。",
    "X71n1421_009:0693a02_1": "開口分明落二三。",
    "X71n1421_009:0693a02_2": "少室九年成滲漏。",
    "X71n1421_009:0693a03_3": "毗耶一默露廉纖。",
    "X71n1421_009:0693a03_4": "禪詮諜諜瘡疣紙。",
    "X71n1421_009:0693a03_5": "教網重重鶻臭衫。",
    "X71n1421_009:0693a04_6": "截斷溪聲廣長舌。",
    "X71n1421_009:0693a04_7": "春風飛燕自喃喃。",
    "X71n1421_009:0693a05_0": "次韻。",
    "X71n1421_009:0693a05_1": "答夢堂法兄兵戈南北競喧爭。",
    "X71n1421_009:0693a06_2": "兄弟分違似隔生。",
    "X71n1421_009:0693a06_3": "瀛海丹山君宴坐。",
    "X71n1421_009:0693a07_4": "劫灰雙徑我徒行。",
    "X71n1421_009:0693a07_5": "只添束篾腰間重。",
    "X71n1421_009:0693a07_6": "依舊眉毛眼上橫。",
    "X71n1421_009:0693a08_7": "賴有祖翁家活在。",
    "X71n1421_009:0693a08_8": "不妨日午打三更。",
    "X71n1421_009:0693a09_0": "示道同淨人",
    "X71n1421_009:0693a10_0": "大道何曾有異同。",
    "X71n1421_009:0693a10_1": "纔生分別便乖宗。",
    "X71n1421_009:0693a10_2": "堂堂獨露聲塵外。",
    "X71n1421_009:0693a11_3": "歷歷常居動用中。",
    "X71n1421_009:0693a11_4": "明鏡非臺光自照。",
    "X71n1421_009:0693a11_5": "菩提無樹體元空。",
    "X71n1421_009:0693a12_6": "迢迢龍翔人歸遠。",
    "X71n1421_009:0693a12_7": "千古誰能振祖風。",
    "X71n1421_009:0693a13_0": "答普濟元恕法兄",
    "X71n1421_009:0693a14_0": "機鋒抹過睦州蹤。",
    "X71n1421_009:0693a14_1": "幢蓋行看上五峯。",
    "X71n1421_009:0693a14_2": "花偈寄來春尚早。",
    "X71n1421_009:0693a15_3": "蘿窓披翫雪初融。",
    "X71n1421_009:0693a15_4": "樓臺突兀吳江上。",
    "X71n1421_009:0693a15_5": "瓦礫從衡徑塢中。",
    "X71n1421_009:0693a16_6": "裁謝莫嫌成嬾慢。",
    "X71n1421_009:0693a16_7": "弟兄千里本同風。",
    "X71n1421_009:0693a17_0": "妙藏主參方",
    "X71n1421_009:0693a18_0": "純圓獨妙子深諳。",
    "X71n1421_009:0693a18_1": "杖屨何須事別參。",
    "X71n1421_009:0693a18_2": "良遂無端見麻谷。",
    "X71n1421_009:0693a19_3": "德山落賺到龍潭。",
    "X71n1421_009:0693a19_4": "衝雲突日遼天鶻。",
    "X71n1421_009:0693a19_5": "覂駕空羣汗血驂。",
    "X71n1421_009:0693a20_6": "袖裏摩尼發光怪。",
    "X71n1421_009:0693a20_7": "照開煙水百城南。",
    "X71n1421_009:0693a21_0": "無竭",
    "X71n1421_009:0693a22_0": "一滴流來自劫空。",
    "X71n1421_009:0693a22_1": "涓涓不絕遠朝宗。",
    "X71n1421_009:0693a22_2": "延洪孰究根源力。",
    "X71n1421_009:0693a23_3": "消長全超造化功。",
    "X71n1421_009:0693a23_4": "沃日滔天殊未泯。",
    "X71n1421_009:0693a23_5": "分枝列派有何窮。",
    "X71n1421_009:0693a24_6": "叢林萬古均沾溉。",
    "X71n1421_009:0693a24_7": "共喜曹溪正脈通。",
    "X71n1421_009:0693b01_0": "次韻。",
    "X71n1421_009:0693b01_1": "送日東俊侍者。",
    "X71n1421_009:0693b01_2": "入閩三喚三呼若震驚。",
    "X71n1421_009:0693b02_3": "屎腸抖擻為君傾。",
    "X71n1421_009:0693b02_4": "國師機用親仍切。",
    "X71n1421_009:0693b03_5": "侍者威儀老更成。",
    "X71n1421_009:0693b03_6": "楖栗枝頭懸震旦。",
    "X71n1421_009:0693b03_7": "蟭螟眼裏泛蓬瀛。",
    "X71n1421_009:0693b04_8": "天風亭上聽秋雨。",
    "X71n1421_009:0693b04_9": "滿耳須知不是聲。",
    "X71n1421_009:0693b05_0": "答蘇昌齡編脩。",
    "X71n1421_009:0693b05_1": "病中索茶東土西乾老淨名。",
    "X71n1421_009:0693b06_2": "經秋不見渴塵生。",
    "X71n1421_009:0693b06_3": "每懷取飯香積國。",
    "X71n1421_009:0693b07_4": "未暇問疾毗耶城。",
    "X71n1421_009:0693b07_5": "劇談直欲離言說。",
    "X71n1421_009:0693b07_6": "安眠豈有閒心情。",
    "X71n1421_009:0693b08_7": "趙州道個喫茶去。",
    "X71n1421_009:0693b08_8": "瞎却幾多人眼睛。",
    "X71n1421_009:0693b09_0": "次韻。",
    "X71n1421_009:0693b09_1": "奉答張蛻軒承旨。",
    "X71n1421_009:0693b09_2": "求作師祖善權和尚塔銘閣老文章有耿光。",
    "X71n1421_009:0693b11_3": "任將四大作禪床。",
    "X71n1421_009:0693b11_4": "筆頭慣點金剛眼。",
    "X71n1421_009:0693b12_5": "手面宏開大寂場。",
    "X71n1421_009:0693b12_6": "鯨海重勞詩遠寄。",
    "X71n1421_009:0693b12_7": "龍淵深喜道相忘。",
    "X71n1421_009:0693b13_8": "亭亭祖塔西岡上。",
    "X71n1421_009:0693b13_9": "有待摛辭下帝鄉。",
    "X71n1421_009:0693b14_0": "次南堂了菴和尚韻",
    "X71n1421_009:0693b15_0": "拂袖中吳第一峯。",
    "X71n1421_009:0693b15_1": "南堂岌岌凜高風。",
    "X71n1421_009:0693b15_2": "坐令鷲嶺真規復。",
    "X71n1421_009:0693b16_3": "不翅松源正脈通。",
    "X71n1421_009:0693b16_4": "長庚爛爛橫霄漢。",
    "X71n1421_009:0693b16_5": "野鶴翩翩絕檻籠。",
    "X71n1421_009:0693b17_6": "快活有時無著處。",
    "X71n1421_009:0693b17_7": "風顛寒拾恰相同。",
    "X71n1421_009:0693b18_0": "次韻。",
    "X71n1421_009:0693b18_1": "示堅禪人芭蕉身相本非堅。",
    "X71n1421_009:0693b19_2": "生死根深苦繞纏。",
    "X71n1421_009:0693b19_3": "直下一刀成兩段。",
    "X71n1421_009:0693b20_4": "何須問道與參禪。",
    "X71n1421_009:0693b20_5": "砂鍋頓頓虀羮飯。",
    "X71n1421_009:0693b20_6": "石鼎時時栢子煙。",
    "X71n1421_009:0693b21_7": "三際十方俱坐斷。",
    "X71n1421_009:0693b21_8": "不知誰後復誰先。",
    "X71n1421_009:0693b22_0": "答天章復初法弟",
    "X71n1421_009:0693b23_0": "嘍羅智者講天台。",
    "X71n1421_009:0693b23_1": "潦到盧公辯鏡臺。",
    "X71n1421_009:0693b23_2": "法法無差波即水。",
    "X71n1421_009:0693b24_3": "新新不住火成灰。",
    "X71n1421_009:0693b24_4": "力將正說排邪說。",
    "X71n1421_009:0693b24_5": "驗盡南來與北來。",
    "X71n1421_009:0693c01_6": "佛日孫枝饒挺秀。",
    "X71n1421_009:0693c01_7": "鐵華還向樹頭開。",
    "X71n1421_009:0693c02_0": "師祖善權元翁和尚忌辰。",
    "X71n1421_009:0693c02_1": "撫景感懷。",
    "X71n1421_009:0693c02_2": "七首今朝五月廿四日。",
    "X71n1421_009:0693c03_3": "老倒禪翁恰化生。",
    "X71n1421_009:0693c03_4": "佛祖位中無住著。",
    "X71n1421_009:0693c04_5": "人天路上謾從衡。",
    "X71n1421_009:0693c04_6": "亭亭峨石機猶峻。",
    "X71n1421_009:0693c04_7": "岌岌龍巖話大行。",
    "X71n1421_009:0693c05_8": "欲識善權端的旨。",
    "X71n1421_009:0693c05_9": "日輪卓午打三更。",
    "X71n1421_009:0693c06_0": "薰風庭院日偏長。",
    "X71n1421_009:0693c06_1": "徧界明明不覆藏。",
    "X71n1421_009:0693c06_2": "今雨稚松爭拔地。",
    "X71n1421_009:0693c07_3": "故園新竹已過墻。",
    "X71n1421_009:0693c07_4": "固知鼯鼠非他物。",
    "X71n1421_009:0693c07_5": "忽聽鳴蟬報夕陽。",
    "X71n1421_009:0693c08_6": "六十六年來又去。",
    "X71n1421_009:0693c08_7": "了無生滅可論量。",
    "X71n1421_009:0693c09_0": "病魔垂老任交攻。",
    "X71n1421_009:0693c09_1": "高臥匡牀丈室中。",
    "X71n1421_009:0693c09_2": "四大色身元是妄。",
    "X71n1421_009:0693c10_3": "多生業障本來空。",
    "X71n1421_009:0693c10_4": "華池寶所阿鼻獄。",
    "X71n1421_009:0693c10_5": "火聚刀山兜率宮。",
    "X71n1421_009:0693c11_6": "天上人間恣游戲。",
    "X71n1421_009:0693c11_7": "開軒徒自挹玄風。",
    "X71n1421_009:0693c12_0": "櫻桃盧橘遶簷栽。",
    "X71n1421_009:0693c12_1": "小小方池手自開。",
    "X71n1421_009:0693c12_2": "曇諦不忘書鎮約。",
    "X71n1421_009:0693c13_3": "黃梅重駕願輪來。",
    "X71n1421_009:0693c13_4": "多身有待分塵剎。",
    "X71n1421_009:0693c13_5": "全體那辭育聖胎。",
    "X71n1421_009:0693c14_6": "薄福住山頭已白。",
    "X71n1421_009:0693c14_7": "深恩何以答涓埃。",
    "X71n1421_009:0693c15_0": "棟宇渠渠更故新。",
    "X71n1421_009:0693c15_1": "寸長尺短妙經綸。",
    "X71n1421_009:0693c15_2": "竹頭木屑知功力。",
    "X71n1421_009:0693c16_3": "露柱燈籠識苦辛。",
    "X71n1421_009:0693c16_4": "香積引泉來百丈。",
    "X71n1421_009:0693c16_5": "層樓送目過由旬。",
    "X71n1421_009:0693c17_6": "却怜坐臥經行處。",
    "X71n1421_009:0693c17_7": "物物全彰淨法身。",
    "X71n1421_009:0693c18_0": "為愛團欒十畞園。",
    "X71n1421_009:0693c18_1": "紅芳消後綠陰連。",
    "X71n1421_009:0693c18_2": "杖藜日涉真成趣。",
    "X71n1421_009:0693c19_3": "野菜時挑不費錢。",
    "X71n1421_009:0693c19_4": "臨濟栽松親钁地。",
    "X71n1421_009:0693c19_5": "仰山種粟自燒田。",
    "X71n1421_009:0693c20_6": "祖翁活計誰相委。",
    "X71n1421_009:0693c20_7": "獨立南榮為惘然。",
    "X71n1421_009:0693c21_0": "舐犢之情似海深。",
    "X71n1421_009:0693c21_1": "誰知黃檗老婆心。",
    "X71n1421_009:0693c21_2": "醍醐酥酪皆同味。",
    "X71n1421_009:0693c22_3": "釵釧缾盤等一金。",
    "X71n1421_009:0693c22_4": "彈指全超法報化。",
    "X71n1421_009:0693c22_5": "飜身坐斷去來今。",
    "X71n1421_009:0693c23_6": "高堂素壁薰風裏。",
    "X71n1421_009:0693c23_7": "遺像重瞻思不禁。",
    "X71n1421_009:0693c24_0": "送相長老潛長老。",
    "X71n1421_009:0693c24_1": "住宣州妙相法相。",
    "X71n1421_009:0693c24_2": "次韻宛陵奚翁之故鄉。",
    "X71n1421_009:0694a01_3": "朝來喜送諸孫行。",
    "X71n1421_009:0694a01_4": "珍重難兄與難弟。",
    "X71n1421_009:0694a02_5": "願言為法不為名。",
    "X71n1421_009:0694a02_6": "雲山千里遙在目。",
    "X71n1421_009:0694a02_7": "祖脈一縷尤關情。",
    "X71n1421_009:0694a03_8": "日炙風吹木瓜樹。",
    "X71n1421_009:0694a03_9": "描不成兮畫不成。",
    "X71n1421_009:0694a04_0": "次韻。",
    "X71n1421_009:0694a04_1": "答寄昭明才無學藏主錦峯山下千年寺。",
    "X71n1421_009:0694a05_2": "橫翠堂中一老身。",
    "X71n1421_009:0694a05_3": "晝夜心源常湛寂。",
    "X71n1421_009:0694a06_4": "冰霜戒檢獨清新。",
    "X71n1421_009:0694a06_5": "彌陀見在忘形友。",
    "X71n1421_009:0694a06_6": "慈氏當來入幕賓。",
    "X71n1421_009:0694a07_7": "願與趙州同甲子。",
    "X71n1421_009:0694a07_8": "裹茶聊寄雨前春。",
    "X71n1421_009:0694a08_0": "彝藏主。",
    "X71n1421_009:0694a08_1": "職滿還承天。",
    "X71n1421_009:0694a08_2": "次剛中禪師韻一氣轉一大藏教。",
    "X71n1421_009:0694a09_3": "回頭故國是夫差。",
    "X71n1421_009:0694a09_4": "驚群喜見英靈漢。",
    "X71n1421_009:0694a10_5": "圓相休呈老作家。",
    "X71n1421_009:0694a10_6": "手面生機禽虎兕。",
    "X71n1421_009:0694a10_7": "頂門正眼辨龍虵。",
    "X71n1421_009:0694a11_8": "叢林秋晚看昂枿。",
    "X71n1421_009:0694a11_9": "遍界開敷五葉華。",
    "X71n1421_009:0694a12_0": "次韻。",
    "X71n1421_009:0694a12_1": "寄開化一元禪師厭看功臣樹色蒼。",
    "X71n1421_009:0694a13_2": "故山端的勝殊方。",
    "X71n1421_009:0694a13_3": "桑麻原隰連香徑。",
    "X71n1421_009:0694a14_4": "金碧樓臺峙寶坊。",
    "X71n1421_009:0694a14_5": "瀹雪小齋雲半榻。",
    "X71n1421_009:0694a14_6": "貫花新偈日千行。",
    "X71n1421_009:0694a15_7": "春深四大輕安否。",
    "X71n1421_009:0694a15_8": "佛祖權衡賴抑揚。",
    "X71n1421_009:0694a16_0": "退歸海雲受業。",
    "X71n1421_009:0694a16_1": "謝祥止菴過訪。",
    "X71n1421_009:0694a16_2": "次韻散席歸休愧老蒼。",
    "X71n1421_009:0694a17_3": "匡徒行道任諸方。",
    "X71n1421_009:0694a17_4": "百年寄幻依雲麓。",
    "X71n1421_009:0694a18_5": "午夜傳衣憶碓坊。",
    "X71n1421_009:0694a18_6": "笋蕨時挑殊有味。",
    "X71n1421_009:0694a18_7": "杉松手植已成行。",
    "X71n1421_009:0694a19_8": "春風短策勞相過。",
    "X71n1421_009:0694a19_9": "活計都盧為舉揚。",
    "X71n1421_009:0694a20_0": "次韻。",
    "X71n1421_009:0694a20_1": "答靈隱介菴應世隨緣沒奈何。",
    "X71n1421_009:0694a21_2": "秋來說法喜無魔。",
    "X71n1421_009:0694a21_3": "須彌椎打虗空鼓。",
    "X71n1421_009:0694a22_4": "般若舟橫苦海波。",
    "X71n1421_009:0694a22_5": "石子岡頭潮信早。",
    "X71n1421_009:0694a22_6": "梅花洲上月明多。",
    "X71n1421_009:0694a23_7": "江流不盡深深意。",
    "X71n1421_009:0694a23_8": "獨許吳音唱楚歌。",
    "X71n1421_009:0694a24_0": "早出餘杭。",
    "X71n1421_009:0694a24_1": "感懷佛祖宏規有準繩。",
    "X71n1421_009:0694b01_2": "侯門無事愧頻登。",
    "X71n1421_009:0694b01_3": "蒼茫五髻三更月。",
    "X71n1421_009:0694b02_4": "迢遞千巖萬壑冰。",
    "X71n1421_009:0694b02_5": "心跡任教同槁木。",
    "X71n1421_009:0694b02_6": "姓名何必上傳燈。",
    "X71n1421_009:0694b03_7": "覺天不夜空無際。",
    "X71n1421_009:0694b03_8": "寂寂行看慧日昇。",
    "X71n1421_009:0694b04_0": "次韻。",
    "X71n1421_009:0694b04_1": "答愚仲法兄寶華白晝雨空山。",
    "X71n1421_009:0694b05_2": "滿紙伽陀辱遠班。",
    "X71n1421_009:0694b05_3": "頓覺五峯嘉氣集。",
    "X71n1421_009:0694b06_4": "坐令千載古風還。",
    "X71n1421_009:0694b06_5": "縱橫妙灑鐵鉤鎖。",
    "X71n1421_009:0694b06_6": "精瑩雄辭玉佩環。",
    "X71n1421_009:0694b07_7": "焚香打鼓普請看。",
    "X71n1421_009:0694b07_8": "津津喜色動衰顏。",
    "X71n1421_009:0694b08_0": "寄天寧白菴",
    "X71n1421_009:0694b09_0": "聞道南湖第一山。",
    "X71n1421_009:0694b09_1": "交參龍象雜官班。",
    "X71n1421_009:0694b09_2": "東頭賣貴西頭賤。",
    "X71n1421_009:0694b10_3": "空手來時赤手還。",
    "X71n1421_009:0694b10_4": "頂[寧*頁]一機猶掣電。",
    "X71n1421_009:0694b10_5": "語言三昧若連環。",
    "X71n1421_009:0694b11_6": "鐵船下海休輕舉。",
    "X71n1421_009:0694b11_7": "老叔談禪亦強顏。",
    "X71n1421_009:0694b12_0": "答東皋伯遠法師。",
    "X71n1421_009:0694b12_1": "二首東皋尊者隱郊墟。",
    "X71n1421_009:0694b13_2": "小小屠蘇睹史居。",
    "X71n1421_009:0694b13_3": "切栢代香朝演法。",
    "X71n1421_009:0694b14_4": "卷簾進月夜紬書。",
    "X71n1421_009:0694b14_5": "村園界熟秋霜後。",
    "X71n1421_009:0694b14_6": "花徑苔生宿雨餘。",
    "X71n1421_009:0694b15_7": "心境兩忘諸幻滅。",
    "X71n1421_009:0694b15_8": "更於何處覓真如。",
    "X71n1421_009:0694b16_0": "楓宸　召對足光榮。",
    "X71n1421_009:0694b16_1": "峻辯宏機悅眾情。",
    "X71n1421_009:0694b16_2": "一妙九旬談不盡。",
    "X71n1421_009:0694b17_3": "千差萬別證無生。",
    "X71n1421_009:0694b17_4": "中吳大士推三傑　上國高僧第一名。",
    "X71n1421_009:0694b18_5": "道重。",
    "X71n1421_009:0694b19_0": "金輪聖天子。",
    "X71n1421_009:0694b19_1": "毗盧頂上等閒行。",
    "X71n1421_009:0694b20_0": "次韻。",
    "X71n1421_009:0694b20_1": "寄行中法兄幢蓋東游駐北山。",
    "X71n1421_009:0694b21_2": "青鞋同踏蘚痕班。",
    "X71n1421_009:0694b21_3": "十年不見風塵隔。",
    "X71n1421_009:0694b22_4": "幾度空懷信息還。",
    "X71n1421_009:0694b22_5": "猛虎口中撐玉箸。",
    "X71n1421_009:0694b22_6": "狻猊頷下解金環。",
    "X71n1421_009:0694b23_7": "剎竿倒却誰扶起。",
    "X71n1421_009:0694b23_8": "爭羨拈花獨破顏。",
    "X71n1421_009:0694b24_0": "次韻。",
    "X71n1421_009:0694b24_1": "寄德嵓講師老倒龍潭接德山。",
    "X71n1421_009:0694c01_2": "紙燈滅處管窺斑。",
    "X71n1421_009:0694c01_3": "爭如東塔生機妙。",
    "X71n1421_009:0694c02_4": "力挽西乾正脈還。",
    "X71n1421_009:0694c02_5": "爛爛雜花真富貴。",
    "X71n1421_009:0694c02_6": "澄澄性海自旋環。",
    "X71n1421_009:0694c03_7": "丹崖碧嶂秋光裏。",
    "X71n1421_009:0694c03_8": "一笑何當展瘦顏。",
    "X71n1421_009:0694c04_0": "復次韻。",
    "X71n1421_009:0694c04_1": "答愚仲法兄碌碌虗聲冐五山。",
    "X71n1421_009:0694c05_2": "驅馳贏得髮毛斑。",
    "X71n1421_009:0694c05_3": "宗綱委地慚無補。",
    "X71n1421_009:0694c06_4": "節序奔流去不還。",
    "X71n1421_009:0694c06_5": "浮世百年蛇戀窟。",
    "X71n1421_009:0694c06_6": "勞生三界蟻循環。",
    "X71n1421_009:0694c07_7": "聖凡平等難調制。",
    "X71n1421_009:0694c07_8": "顧我疎才覺厚顏。",
    "X71n1421_009:0694c08_0": "答前開元方崖法兄。",
    "X71n1421_009:0694c08_1": "二首宗教人才繫重輕。",
    "X71n1421_009:0694c09_2": "弟兄垂老益關情。",
    "X71n1421_009:0694c09_3": "徒勞剎說仍塵說。",
    "X71n1421_009:0694c10_4": "盡把風聲作雨聲。",
    "X71n1421_009:0694c10_5": "勇退曾聞法雲本。",
    "X71n1421_009:0694c10_6": "高閒誰似覺天清。",
    "X71n1421_009:0694c11_7": "尚期末路參玄士。",
    "X71n1421_009:0694c11_8": "悉使歸家罷問程。",
    "X71n1421_009:0694c12_0": "秋晚叢林委地空。",
    "X71n1421_009:0694c12_1": "菴居小小不雷同。",
    "X71n1421_009:0694c12_2": "單提獨弄三江上。",
    "X71n1421_009:0694c13_3": "萬別千差一照中。",
    "X71n1421_009:0694c13_4": "船子清風來夾嶠。",
    "X71n1421_009:0694c13_5": "馬師異類得龐公。",
    "X71n1421_009:0694c14_6": "遙知緇白交參處。",
    "X71n1421_009:0694c14_7": "入夜高燒蠟炬紅。",
    "X71n1421_009:0694c15_0": "悼楚石和尚。",
    "X71n1421_009:0694c15_1": "三首潦倒奚翁的骨孫。",
    "X71n1421_009:0694c16_2": "高年說法屢承恩。",
    "X71n1421_009:0694c17_3": "麻鞋直上黃金殿。",
    "X71n1421_009:0694c18_4": "鐵錫時敲白下門。",
    "X71n1421_009:0694c18_5": "煩惱海中垂雨露。",
    "X71n1421_009:0694c18_6": "虗空背上立乾坤。",
    "X71n1421_009:0694c19_7": "秋風唱徹無生曲。",
    "X71n1421_009:0694c19_8": "白牯狸奴亦斷魂聖主從容問鬼神。",
    "X71n1421_009:0694c20_9": "當機一默重千鈞。",
    "X71n1421_009:0694c20_10": "茶毗直下金門詔。",
    "X71n1421_009:0694c21_11": "火聚全彰淨法身。",
    "X71n1421_009:0694c21_12": "平地驚翻三世佛。",
    "X71n1421_009:0694c21_13": "等閒瞎却一城人。",
    "X71n1421_009:0694c22_14": "大悲願力知多少。",
    "X71n1421_009:0694c22_15": "枯木花開別是春。",
    "X71n1421_009:0694c23_0": "匡床談笑坐跏趺。",
    "X71n1421_009:0694c23_1": "遺偈親書若貫珠。",
    "X71n1421_009:0694c23_2": "木馬夜鳴端的別。",
    "X71n1421_009:0694c24_3": "西方日出古今無。",
    "X71n1421_009:0694c24_4": "分身何啻居天界。",
    "X71n1421_009:0694c24_5": "弘法毋忘在帝都。",
    "X71n1421_009:0695a01_6": "白髮弟兄空老大。",
    "X71n1421_009:0695a01_7": "剎竿倒却要人扶。",
    "X71n1421_009:0695a02_0": "次韻。",
    "X71n1421_009:0695a02_1": "賀象元禪師。",
    "X71n1421_009:0695a02_2": "遷徑塢萬仞龍門奏凱歸。",
    "X71n1421_009:0695a03_3": "山頭魚躍井塵飛。",
    "X71n1421_009:0695a03_4": "生機透脫空諸有。",
    "X71n1421_009:0695a04_5": "妙用縱橫顯眾微。",
    "X71n1421_009:0695a04_6": "四海叢林師望重。",
    "X71n1421_009:0695a04_7": "三台人物曉星稀。",
    "X71n1421_009:0695a05_8": "祖翁塔所能延老。",
    "X71n1421_009:0695a05_9": "擬辦遮寒布衲衣。",
    "X71n1421_009:0695a06_0": "用韻。",
    "X71n1421_009:0695a06_1": "寄天界全室禪師詔領宗壇萬衲歸。",
    "X71n1421_009:0695a07_2": "龍河花雨日紛飛。",
    "X71n1421_009:0695a07_3": "朝回曙色開黃道。",
    "X71n1421_009:0695a08_4": "定起靈光繞紫微。",
    "X71n1421_009:0695a08_5": "貝闕珠宮天上有。",
    "X71n1421_009:0695a08_6": "法王禪將眼中稀。",
    "X71n1421_009:0695a09_7": "何當一扣毗耶室。",
    "X71n1421_009:0695a09_8": "笑攬金紅屈眴衣。",
    "X71n1421_009:0695a10_0": "答謝前虎丘行中法兄。",
    "X71n1421_009:0695a10_1": "過訪忽報雲巖老漢歸。",
    "X71n1421_009:0695a11_2": "秋風瀆水片颿飛。",
    "X71n1421_009:0695a11_3": "衝霄鐵鳳離金網。",
    "X71n1421_009:0695a12_4": "戴角於菟出翠微。",
    "X71n1421_009:0695a12_5": "勇退急流今古少。",
    "X71n1421_009:0695a12_6": "相看白髮弟兄稀。",
    "X71n1421_009:0695a13_7": "願同寶掌千年壽。",
    "X71n1421_009:0695a13_8": "五髻峯頭一振衣。",
    "X71n1421_009:0695a14_0": "次韻。",
    "X71n1421_009:0695a14_1": "答天之西堂天寧活計了無錐。",
    "X71n1421_009:0695a15_2": "直指宗風力主維。",
    "X71n1421_009:0695a15_3": "少減多添能恰好。",
    "X71n1421_009:0695a16_4": "橫該豎抹總相宜。",
    "X71n1421_009:0695a16_5": "神機掣電全生殺。",
    "X71n1421_009:0695a16_6": "妙語流珠燦陸離。",
    "X71n1421_009:0695a17_7": "九里湖邊弘法施。",
    "X71n1421_009:0695a17_8": "任教諸子廣傳持。",
    "X71n1421_009:0695a18_0": "慧侍者。",
    "X71n1421_009:0695a18_1": "歸吳門侍者參得禪了也。",
    "X71n1421_009:0695a19_2": "戴角於菟插翅飛。",
    "X71n1421_009:0695a19_3": "笑倒生公點頭石。",
    "X71n1421_009:0695a20_4": "合傳隆祖袒肩衣。",
    "X71n1421_009:0695a20_5": "論功何啻超乾慧。",
    "X71n1421_009:0695a20_6": "唱道還看顯大機。",
    "X71n1421_009:0695a21_7": "莫把閒情憐老叔。",
    "X71n1421_009:0695a21_8": "長江好泛鐵船歸。",
    "X71n1421_009:0695a22_0": "次韻。",
    "X71n1421_009:0695a22_1": "答寄佑啟宗。",
    "X71n1421_009:0695a22_2": "二首麗藻天垂五色雲。",
    "X71n1421_009:0695a23_3": "龍河倦客思紛紛。",
    "X71n1421_009:0695a23_4": "永嘉一宿曹溪室。",
    "X71n1421_009:0695a24_5": "智者兼修止觀門。",
    "X71n1421_009:0695a24_6": "今古閒生人物異。",
    "X71n1421_009:0695a24_7": "教禪同仰法王尊。",
    "X71n1421_009:0695b01_8": "放開佛手伸驢脚。",
    "X71n1421_009:0695b01_9": "任使諸方謾度論。",
    "X71n1421_009:0695b02_0": "風標濟濟出羣才。",
    "X71n1421_009:0695b02_1": "目眎雲霄臥草萊。",
    "X71n1421_009:0695b02_2": "未許知心排闥起。",
    "X71n1421_009:0695b03_3": "肯因傳語下山來。",
    "X71n1421_009:0695b03_4": "陰凉大樹元無種。",
    "X71n1421_009:0695b03_5": "般若靈苗宿有荄。",
    "X71n1421_009:0695b04_6": "爭頌楚材須晉用。",
    "X71n1421_009:0695b04_7": "只應僧佑眾中魁。",
    "X71n1421_009:0695b05_0": "次韻。",
    "X71n1421_009:0695b05_1": "悼逆川和尚潦倒川翁莫與京。",
    "X71n1421_009:0695b06_2": "去來何用問前程。",
    "X71n1421_009:0695b06_3": "踏飜大地無行跡。",
    "X71n1421_009:0695b07_4": "撲落虗空絕謂情。",
    "X71n1421_009:0695b07_5": "任爾鐵牛生犢子。",
    "X71n1421_009:0695b07_6": "從他海燕作雷聲。",
    "X71n1421_009:0695b08_7": "臨終說偈辭。",
    "X71n1421_009:0695b09_0": "明主。",
    "X71n1421_009:0695b09_1": "不比尋常蚓竅鳴。",
    "X71n1421_009:0695b10_0": "次韻。",
    "X71n1421_009:0695b10_1": "懷幻隱首座。",
    "X71n1421_009:0695b10_2": "率眾鳳陽法會說法濠梁據上班。",
    "X71n1421_009:0695b11_3": "聲傳萬國盡歡顏。",
    "X71n1421_009:0695b11_4": "四花繚繞人天座。",
    "X71n1421_009:0695b12_5": "百寶光嚴虎豹關。",
    "X71n1421_009:0695b12_6": "赫赫神符懸肘後。",
    "X71n1421_009:0695b12_7": "煌煌慧劒挂眉閒。",
    "X71n1421_009:0695b13_8": "三千龍象隨高步。",
    "X71n1421_009:0695b13_9": "歲晚江空願早還。",
    "X71n1421_009:0695b14_0": "示白禪人",
    "X71n1421_009:0695b15_0": "白業精修苦行堅。",
    "X71n1421_009:0695b15_1": "未明心地更加鞭。",
    "X71n1421_009:0695b15_2": "三乘教外元無法。",
    "X71n1421_009:0695b16_3": "七尺單前豈有禪。",
    "X71n1421_009:0695b16_4": "莫學少林空面壁。",
    "X71n1421_009:0695b16_5": "從教南嶽自磨磚。",
    "X71n1421_009:0695b17_6": "鐵牛掣斷黃金索。",
    "X71n1421_009:0695b17_7": "鼻孔撩天不著穿。",
    "X71n1421_009:0695b18_0": "龍潭舟中。",
    "X71n1421_009:0695b18_1": "寄天界全室禪師詔許還山得便風。",
    "X71n1421_009:0695b19_2": "吳船如屋大江東聖皇有道逾仁廟。",
    "X71n1421_009:0695b20_3": "野衲非才愧璉公。",
    "X71n1421_009:0695b20_4": "袞袞波濤皆睿澤。",
    "X71n1421_009:0695b21_5": "寥寥天地一冥鴻。",
    "X71n1421_009:0695b21_6": "三年旅食曾無補。",
    "X71n1421_009:0695b21_7": "回首龍河思莫窮。",
    "X71n1421_009:0695b23_0": "法城禪人。",
    "X71n1421_009:0695b23_1": "化緣。",
    "X71n1421_009:0695b23_2": "修磧砂經坊城禪切忌墮疑城。",
    "X71n1421_009:0695b24_3": "施受論功只礙膺。",
    "X71n1421_009:0695b24_4": "大法本來無一字。",
    "X71n1421_009:0695c01_5": "釋尊方便說三乘。",
    "X71n1421_009:0695c01_6": "輝天鑑地光明藏。",
    "X71n1421_009:0695c01_7": "塞壑填溝爛葛藤。",
    "X71n1421_009:0695c02_8": "隨順世緣平等化。",
    "X71n1421_009:0695c02_9": "道人行處火燒冰。",
    "X71n1421_009:0695c03_0": "示吳無妄居士",
    "X71n1421_009:0695c04_0": "麩金嶺下搆菟裘。",
    "X71n1421_009:0695c04_1": "火種刀耕已白頭。",
    "X71n1421_009:0695c04_2": "摩詰有妻稱法喜。",
    "X71n1421_009:0695c05_3": "釋尊生子謂羅睺。",
    "X71n1421_009:0695c05_4": "一真境界無虗妄。",
    "X71n1421_009:0695c05_5": "三大僧祇孰進修。",
    "X71n1421_009:0695c06_6": "識得本原心即佛。",
    "X71n1421_009:0695c06_7": "火中踢出百華毬。",
    "X71n1421_009:0695c07_0": "次韻。",
    "X71n1421_009:0695c07_1": "示萬壽因藏主本來平等沒疏親。",
    "X71n1421_009:0695c08_2": "學道應須達正因。",
    "X71n1421_009:0695c08_3": "只為眾生迷寶藏。",
    "X71n1421_009:0695c09_4": "直教大覺棄金輪。",
    "X71n1421_009:0695c09_5": "北山密付刀頭蜜。",
    "X71n1421_009:0695c09_6": "西麓全提眼裏塵。",
    "X71n1421_009:0695c10_7": "石火電光猶是鈍。",
    "X71n1421_009:0695c10_8": "當機無我亦無人。",
    "X71n1421_009:0695c11_0": "悼開元方崖法兄",
    "X71n1421_009:0695c12_0": "丁巳十月十六日。",
    "X71n1421_009:0695c12_1": "開元老漢入泥洹。",
    "X71n1421_009:0695c12_2": "信脚踏飜浮佛閣。",
    "X71n1421_009:0695c13_3": "全身抹過聽秋軒。",
    "X71n1421_009:0695c13_4": "眾人索偈聊書偈。",
    "X71n1421_009:0695c13_5": "至道離言豈有言。",
    "X71n1421_009:0695c14_6": "七十一年無罣礙。",
    "X71n1421_009:0695c14_7": "話行東土與西乾。",
    "X71n1421_009:0695c15_0": "老禪遷化荊溪寺。",
    "X71n1421_009:0695c15_1": "物物全彰淨法身。",
    "X71n1421_009:0695c15_2": "蛻角泥牛耕碧落。",
    "X71n1421_009:0695c16_3": "懷胎玉兔衮紅塵。",
    "X71n1421_009:0695c16_4": "雙趺示相機雖妙。",
    "X71n1421_009:0695c16_5": "一曲無生調轉新。",
    "X71n1421_009:0695c17_6": "大寂定門來又去。",
    "X71n1421_009:0695c17_7": "曇花重現少林春。",
    "X71n1421_009:0695c18_0": "次韻。",
    "X71n1421_009:0695c18_1": "示明禪人護龍河上寺。",
    "X71n1421_009:0695c19_2": "濟濟眾如林。",
    "X71n1421_009:0695c19_3": "擬欲求玄旨。",
    "X71n1421_009:0695c19_4": "應須達本心。",
    "X71n1421_009:0695c20_0": "能傳南嶽讓。",
    "X71n1421_009:0695c20_1": "素得徑山欽。",
    "X71n1421_009:0695c20_2": "日用宜高潔。",
    "X71n1421_009:0695c20_3": "雲生性地陰。",
    "X71n1421_009:0695c21_0": "次韻。",
    "X71n1421_009:0695c21_1": "示聞維那教體音聞外。",
    "X71n1421_009:0695c22_2": "真空是道場。",
    "X71n1421_009:0695c22_3": "龍河機用別。",
    "X71n1421_009:0695c22_4": "鷲嶺話頭長。",
    "X71n1421_009:0695c23_0": "門掩三春雨。",
    "X71n1421_009:0695c23_1": "身全五分香。",
    "X71n1421_009:0695c23_2": "罰錢仍出院。",
    "X71n1421_009:0695c23_3": "切忌錯商量。",
    "X71n1421_009:0695c24_0": "贈敏侍者。",
    "X71n1421_009:0695c24_1": "兼簡度白雲機用誇神敏。",
    "X71n1421_009:0696a01_2": "叢林譽蚤騰。",
    "X71n1421_009:0696a01_3": "永嘉怜一宿。",
    "X71n1421_009:0696a01_4": "雪嶠愧三登。",
    "X71n1421_009:0696a02_0": "共羨非凡種。",
    "X71n1421_009:0696a02_1": "深期續祖鐙。",
    "X71n1421_009:0696a02_2": "國師同在客。",
    "X71n1421_009:0696a02_3": "喚爾急須譍。",
    "X71n1421_009:0696a03_0": "達禪人參方",
    "X71n1421_009:0696a04_0": "雲山佳衲子。",
    "X71n1421_009:0696a04_1": "宜達境唯心。",
    "X71n1421_009:0696a04_2": "自說遊京國。",
    "X71n1421_009:0696a04_3": "親曾訪道林。",
    "X71n1421_009:0696a05_0": "話頭明歷歷。",
    "X71n1421_009:0696a05_1": "脚債尚駸駸。",
    "X71n1421_009:0696a05_2": "勿惜勤參禮。",
    "X71n1421_009:0696a05_3": "玄門似海深。",
    "X71n1421_009:0696a06_0": "示守正禪人",
    "X71n1421_009:0696a07_0": "參禪能守正。",
    "X71n1421_009:0696a07_1": "邪念任紛飛。",
    "X71n1421_009:0696a07_2": "試究紛飛處。",
    "X71n1421_009:0696a07_3": "終歸湛寂時。",
    "X71n1421_009:0696a08_0": "樅然諸境界。",
    "X71n1421_009:0696a08_1": "不隔一毫釐。",
    "X71n1421_009:0696a08_2": "言外知端的。",
    "X71n1421_009:0696a08_3": "虗空展笑眉。",
    "X71n1421_009:0696a09_0": "善住禪者參方",
    "X71n1421_009:0696a10_0": "白雲堆裏住。",
    "X71n1421_009:0696a10_1": "知識久咨參。",
    "X71n1421_009:0696a10_2": "既善探玄旨。",
    "X71n1421_009:0696a10_3": "何妨出翠嵐。",
    "X71n1421_009:0696a11_0": "諸方無別法。",
    "X71n1421_009:0696a11_1": "此語貴深諳。",
    "X71n1421_009:0696a11_2": "客路驚秋早。",
    "X71n1421_009:0696a11_3": "頭頭為指南。",
    "X71n1421_009:0696a12_0": "山樓秋夜。",
    "X71n1421_009:0696a12_1": "三首月色白如晝。",
    "X71n1421_009:0696a13_2": "松陰多似雲。",
    "X71n1421_009:0696a13_3": "窓虗山欲墮。",
    "X71n1421_009:0696a13_4": "燈灺夜初分。",
    "X71n1421_009:0696a14_0": "河影中天見。",
    "X71n1421_009:0696a14_1": "泉聲隔樹聞。",
    "X71n1421_009:0696a14_2": "小樓成獨坐。",
    "X71n1421_009:0696a14_3": "此景與誰論。",
    "X71n1421_009:0696a15_0": "衰草緣幽徑。",
    "X71n1421_009:0696a15_1": "疎林出短墻。",
    "X71n1421_009:0696a15_2": "風回驚宿鳥。",
    "X71n1421_009:0696a15_3": "露下泣寒螿。",
    "X71n1421_009:0696a16_0": "歷歷無差互。",
    "X71n1421_009:0696a16_1": "頭頭自顯揚。",
    "X71n1421_009:0696a16_2": "跏趺坐來久。",
    "X71n1421_009:0696a16_3": "重爇瓦爐香。",
    "X71n1421_009:0696a17_0": "秋半山樓好。",
    "X71n1421_009:0696a17_1": "匡床夜不眠。",
    "X71n1421_009:0696a17_2": "感時思佛果。",
    "X71n1421_009:0696a17_3": "撫景憶南泉。",
    "X71n1421_009:0696a18_0": "月下機何峻。",
    "X71n1421_009:0696a18_1": "更深語最玄。",
    "X71n1421_009:0696a18_2": "寥寥千古意。",
    "X71n1421_009:0696a18_3": "危坐獨超然。",
    "X71n1421_009:0696a19_0": "寄德巖行講師",
    "X71n1421_009:0696a20_0": "七帝論心鎮國師。",
    "X71n1421_009:0696a20_1": "雨窻孤坐想風姿。",
    "X71n1421_009:0696a20_2": "化龍叶夢孫枝在。",
    "X71n1421_009:0696a21_3": "濯濯優曇見一枝。",
    "X71n1421_009:0696a22_0": "寄洞庭羅漢琛頑石書記(時居祖憂)秋風木葉洞庭波。",
    "X71n1421_009:0696a23_1": "愁殺山中諾詎那。",
    "X71n1421_009:0696a23_2": "恩愛盡時煩惱盡。",
    "X71n1421_009:0696a24_3": "好攜缾錫出煙蘿。",
    "X71n1421_009:0696b01_0": "次韻。",
    "X71n1421_009:0696b01_1": "危太樸翰林。",
    "X71n1421_009:0696b01_2": "錢塘留別護龍河上飜經日。",
    "X71n1421_009:0696b02_3": "西子湖頭立馬時。",
    "X71n1421_009:0696b02_4": "話盡山雲并海月。",
    "X71n1421_009:0696b03_5": "此情只許白鷗知。",
    "X71n1421_009:0696b04_0": "寄普慈東堂蘭石和尚",
    "X71n1421_009:0696b05_0": "蒼雪樓頭八十翁。",
    "X71n1421_009:0696b05_1": "空華幻境盡銷鎔。",
    "X71n1421_009:0696b05_2": "風微晝永南山麓。",
    "X71n1421_009:0696b06_3": "拄杖穿林看籜龍。",
    "X71n1421_009:0696b07_0": "招衍懺首掌記",
    "X71n1421_009:0696b08_0": "二月東吳浩蕩春。",
    "X71n1421_009:0696b08_1": "青天時雨講花新。",
    "X71n1421_009:0696b08_2": "縵縵教網周沙界。",
    "X71n1421_009:0696b09_3": "透脫須還是錦鱗。",
    "X71n1421_009:0696b10_0": "罪性元空懺亦非。",
    "X71n1421_009:0696b10_1": "一心三觀涉離微。",
    "X71n1421_009:0696b10_2": "太虗為紙須彌筆。",
    "X71n1421_009:0696b11_3": "倒用橫拈最上機。",
    "X71n1421_009:0696b12_0": "念禪人禮補陀",
    "X71n1421_009:0696b13_0": "一念普觀無量劫。",
    "X71n1421_009:0696b13_1": "塵毛剎海總圓通。",
    "X71n1421_009:0696b13_2": "白花巖畔金剛石。",
    "X71n1421_009:0696b14_3": "昨夜藏身北斗中。",
    "X71n1421_009:0696b15_0": "登五雲山望江亭",
    "X71n1421_009:0696b16_0": "高亭注目正清秋。",
    "X71n1421_009:0696b16_1": "野曠天空事事幽。",
    "X71n1421_009:0696b16_2": "白鳥青山雲淡淡。",
    "X71n1421_009:0696b17_3": "滄江斜日水悠悠。",
    "X71n1421_009:0696b18_0": "示壽知客",
    "X71n1421_009:0696b19_0": "開先寺裏迎賓日。",
    "X71n1421_009:0696b19_1": "禪月堂前索偈時。",
    "X71n1421_009:0696b19_2": "客路如天春似海。",
    "X71n1421_009:0696b20_3": "子規啼斷落花枝。",
    "X71n1421_009:0696b21_0": "勝禪人歸宣州",
    "X71n1421_009:0696b22_0": "名字既同黃檗勝。",
    "X71n1421_009:0696b22_1": "參禪須會趙州無。",
    "X71n1421_009:0696b22_2": "昨夜宣城木瓜樹。",
    "X71n1421_009:0696b23_3": "開花結箇苦胡蘆。",
    "X71n1421_009:0696b24_0": "解制二首。",
    "X71n1421_009:0696b24_1": "次大覺象元韻凌霄一夏九十日。",
    "X71n1421_009:0696c01_2": "無佛無我無眾生。",
    "X71n1421_009:0696c01_3": "昨夜秋風動林樾。",
    "X71n1421_009:0696c02_4": "任教白髮長新莖。",
    "X71n1421_009:0696c03_0": "九旬共喜無諸難。",
    "X71n1421_009:0696c03_1": "功行誰能驗蠟人。",
    "X71n1421_009:0696c03_2": "彼此住山成老大。",
    "X71n1421_009:0696c04_3": "又看桑海一番新。",
    "X71n1421_009:0696c05_0": "血書法華經。",
    "X71n1421_009:0696c05_1": "報母筆底紅蓮朵朵開。",
    "X71n1421_009:0696c06_2": "是名真法供如來。",
    "X71n1421_009:0696c06_3": "指端瀝盡娘生血全體何曾出母胎。",
    "X71n1421_009:0696c08_0": "福建琦禪人。",
    "X71n1421_009:0696c08_1": "禮峨眉普賢大士閩蜀同風莫外求。",
    "X71n1421_009:0696c09_2": "峨眉山月半輪秋。",
    "X71n1421_009:0696c09_3": "玄沙不出飛鳶嶺。",
    "X71n1421_009:0696c10_4": "築破娘生脚指頭。",
    "X71n1421_009:0696c11_0": "用宋景濂學士韻。",
    "X71n1421_009:0696c11_1": "送妥侍者回育王。",
    "X71n1421_009:0696c11_2": "開本師塔銘點開鄮嶺金剛眼。",
    "X71n1421_009:0696c13_3": "照破昏衢萬八千。",
    "X71n1421_009:0696c13_4": "無相光中老居士。",
    "X71n1421_009:0696c14_5": "話行東土與西天。",
    "X71n1421_009:0696c15_0": "乞得金華學士禪。",
    "X71n1421_009:0696c15_1": "絕勝荷毳獲純緜。",
    "X71n1421_009:0696c15_2": "鐵鍬不用尋靈骨。",
    "X71n1421_009:0696c16_3": "密意分明在汝邊。",
    "X71n1421_009:0696c17_0": "贈鑷生",
    "X71n1421_009:0696c18_0": "千僧遍剃娘生髮。",
    "X71n1421_009:0696c18_1": "一念全超罔極恩。",
    "X71n1421_009:0696c18_2": "老我畏寒偏護頂。",
    "X71n1421_009:0696c19_3": "謾勞彈鑷到雲根。",
    "X71n1421_009:0696c20_0": "寄前瑞巖恕中和尚",
    "X71n1421_009:0696c21_0": "惺惺石上主人翁。",
    "X71n1421_009:0696c21_1": "一室高居太白峯。",
    "X71n1421_009:0696c21_2": "靖退只今非小節。",
    "X71n1421_009:0696c22_3": "知心未許石門聰。",
    "X71n1421_009:0696c23_0": "千里同風各莫年。",
    "X71n1421_009:0696c23_1": "任教滄海變桑田。",
    "X71n1421_009:0696c23_2": "獨憐熊耳峰頭月。",
    "X71n1421_009:0696c24_3": "昨夜蝦蟆蝕半邊。",
    "X71n1421_009:0697a01_0": "徒誇錦瑟與瑤琴。",
    "X71n1421_009:0697a01_1": "妙指方能發妙音。",
    "X71n1421_009:0697a01_2": "却憶鰲山深雪夜。",
    "X71n1421_009:0697a02_3": "弟兄傾盡歲寒心。",
    "X71n1421_009:0697a03_0": "示日本春禪人。",
    "X71n1421_009:0697a03_1": "三首少林春色徧遐荒。",
    "X71n1421_009:0697a04_2": "不隔扶桑與大唐。",
    "X71n1421_009:0697a04_3": "三拜起來依位立。",
    "X71n1421_009:0697a05_4": "無端好肉自剜瘡。",
    "X71n1421_009:0697a06_0": "扶桑人種陝西田。",
    "X71n1421_009:0697a06_1": "打著南邊動北邊。",
    "X71n1421_009:0697a06_2": "踏徧支那知落處。",
    "X71n1421_009:0697a07_3": "阿難依舊世尊前。",
    "X71n1421_009:0697a08_0": "參禪只要了心地。",
    "X71n1421_009:0697a08_1": "欲覓了時無了時。",
    "X71n1421_009:0697a08_2": "未跨船舷三十棓。",
    "X71n1421_009:0697a09_3": "老僧失却一莖眉。",
    "X71n1421_009:0697a10_0": "建長明南浦。",
    "X71n1421_009:0697a10_1": "四會錄蟭螟眼裏五須彌。",
    "X71n1421_009:0697a11_2": "靠倒虗堂老古錐。",
    "X71n1421_009:0697a11_3": "四會搏桑熾然說。",
    "X71n1421_009:0697a12_4": "曾無一字挂脣皮。",
    "X71n1421_009:0697a13_0": "謝嚴子魯左丞。",
    "X71n1421_009:0697a13_1": "惠貢餘新茶槍旗不展策全勛。",
    "X71n1421_009:0697a14_2": "占斷江南第一春。",
    "X71n1421_009:0697a14_3": "除却金輪聖天子。",
    "X71n1421_009:0697a15_4": "舌頭具眼是何人。",
    "X71n1421_009:0697a16_0": "寄王畊雲照磨",
    "X71n1421_009:0697a17_0": "春山老圃帶雲畊。",
    "X71n1421_009:0697a17_1": "芝草琅玕滿地生。",
    "X71n1421_009:0697a17_2": "讀罷楞伽日亭午。",
    "X71n1421_009:0697a18_3": "海棠花下聽啼鸎。",
    "X71n1421_009:0697a19_0": "示郁止齋居士",
    "X71n1421_009:0697a20_0": "學道應須達正因。",
    "X71n1421_009:0697a20_1": "道原曾不離諸塵。",
    "X71n1421_009:0697a20_2": "當知一切眾生界。",
    "X71n1421_009:0697a21_3": "即是如來淨法身。",
    "X71n1421_009:0697a22_0": "祖禪人歸五祖",
    "X71n1421_009:0697a23_0": "風流公子正法眼。",
    "X71n1421_009:0697a23_1": "紅粉佳人最上機。",
    "X71n1421_009:0697a23_2": "拈却東山左邊底。",
    "X71n1421_009:0697a24_3": "祖天日月倍光輝。",
    "X71n1421_009:0697b01_0": "義禪人歸京口。",
    "X71n1421_009:0697b01_1": "次嶼雲心西堂韻直將直義報禪流。",
    "X71n1421_009:0697b02_2": "法法毋勞向外求。",
    "X71n1421_009:0697b02_3": "月滿淮南江水白。",
    "X71n1421_009:0697b03_4": "角聲吹徹甕城秋。",
    "X71n1421_009:0697b04_0": "洪武戊申。",
    "X71n1421_009:0697b04_1": "浙右三宗諸山。",
    "X71n1421_009:0697b04_2": "奉　旨。",
    "X71n1421_009:0697b04_3": "會于天界寺。",
    "X71n1421_009:0697b05_4": "十僧相繼坐化。",
    "X71n1421_009:0697b05_5": "吳江佑上人。",
    "X71n1421_009:0697b05_6": "集遺偈。",
    "X71n1421_009:0697b05_7": "成卷。",
    "X71n1421_009:0697b06_0": "請題",
    "X71n1421_009:0697b07_0": "十方薄伽梵。",
    "X71n1421_009:0697b07_1": "一路涅盤門。",
    "X71n1421_009:0697b07_2": "苦海孤舟客。",
    "X71n1421_009:0697b07_3": "徒勞刻劍痕。",
    "X71n1421_009:0697b08_0": "題一雨師悼頌卷(自號真實尊者)",
    "X71n1421_009:0697b09_0": "稽首一雨師。",
    "X71n1421_009:0697b09_1": "日用惟真實。",
    "X71n1421_009:0697b09_2": "捄旱自焚身。",
    "X71n1421_009:0697b09_3": "精進波羅蜜。",
    "X71n1421_009:0697b11_0": "愚菴和尚語錄卷第九"
}