    },
    {
        "source_sentence": "何等一法？",
        "from": "T17n0830_001:0874c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂懈怠。",
        "from": "T17n0830_001:0874c18_8",
        "context_with_next_sentence": true
    },
    {
