[
    {
        "source_sentence": "金剛壽命陀羅尼念誦法",
        "from": "T20n1133_001:0575a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T20n1133_001:0575a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空諡大鑒",
        "from": "T20n1133_001:0575a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正號大廣智大興善寺三藏沙門不空奉　詔譯我今依金剛頂瑜伽經。",
        "from": "T20n1133_001:0575a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那報身佛。",
        "from": "T20n1133_001:0575a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於色界頂第四禪。",
        "from": "T20n1133_001:0575a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成等正覺。",
        "from": "T20n1133_001:0575a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即下須彌頂金寶峯樓閣。",
        "from": "T20n1133_001:0575a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空遍法界一切如來。",
        "from": "T20n1133_001:0575a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉雲集前後圍遶。",
        "from": "T20n1133_001:0575a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異口同音。",
        "from": "T20n1133_001:0575a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願世尊轉微妙法甚深祕密四種法輪。",
        "from": "T20n1133_001:0575a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂金剛界輪。",
        "from": "T20n1133_001:0575a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降三世教令輪。",
        "from": "T20n1133_001:0575a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍調伏法輪。",
        "from": "T20n1133_001:0575a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切義利成就輪。",
        "from": "T20n1133_001:0575a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是四輪。",
        "from": "T20n1133_001:0575a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從毘盧遮那如來心出。",
        "from": "T20n1133_001:0575a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一輪皆有三十七聖者。",
        "from": "T20n1133_001:0575a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一真言一一三摩地一一印契。",
        "from": "T20n1133_001:0575a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威儀執持大悲願力。",
        "from": "T20n1133_001:0575a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於雜染佛世界。",
        "from": "T20n1133_001:0575a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨妙佛世界。",
        "from": "T20n1133_001:0575a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或隱或顯輪轉利樂。",
        "from": "T20n1133_001:0575a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度諸眾生各各不同。",
        "from": "T20n1133_001:0575a29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那佛受諸如來請已。",
        "from": "T20n1133_001:0575b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲轉法輪時。",
        "from": "T20n1133_001:0575b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入三摩地。",
        "from": "T20n1133_001:0575b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀見摩醯首羅天等剛強難化。",
        "from": "T20n1133_001:0575b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執著邪見。",
        "from": "T20n1133_001:0575b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非我寂靜大悲之身。",
        "from": "T20n1133_001:0575b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堪任調伏。",
        "from": "T20n1133_001:0575b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時世尊入忿怒三摩地。",
        "from": "T20n1133_001:0575b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從胸臆五峯金剛菩提心。",
        "from": "T20n1133_001:0575b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出四面八臂威德熾盛赫奕難覩降三世金剛菩薩身。",
        "from": "T20n1133_001:0575b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍禮毘盧遮那及一切諸佛。",
        "from": "T20n1133_001:0575b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊示教於我。",
        "from": "T20n1133_001:0575b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何所為作佛告降三世菩薩。",
        "from": "T20n1133_001:0575b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今調伏難調諸天。",
        "from": "T20n1133_001:0575b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令歸依諸佛法僧發菩提心。",
        "from": "T20n1133_001:0575b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天盡皆歸依。",
        "from": "T20n1133_001:0575b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯大自在天恃大威德。",
        "from": "T20n1133_001:0575b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來相拒敵。",
        "from": "T20n1133_001:0575b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降三世種種苦治。",
        "from": "T20n1133_001:0575b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於死。",
        "from": "T20n1133_001:0575b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那佛入悲愍大悲三昧耶。",
        "from": "T20n1133_001:0575b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說金剛壽命陀羅尼。",
        "from": "T20n1133_001:0575b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便入金剛壽命三摩地。",
        "from": "T20n1133_001:0575b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃結印契加持摩醯首羅天。",
        "from": "T20n1133_001:0575b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復還得蘇。",
        "from": "T20n1133_001:0575b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更增壽命。",
        "from": "T20n1133_001:0575b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依諸佛灌頂。",
        "from": "T20n1133_001:0575b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授記證得八地。",
        "from": "T20n1133_001:0575b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛壽命真言曰。",
        "from": "T20n1133_001:0575b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合喻矖娑嚩二合引賀引佛告執金剛菩薩。",
        "from": "T20n1133_001:0575b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人受持念誦日各三時時別千遍。",
        "from": "T20n1133_001:0575b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去所有惡業因緣。",
        "from": "T20n1133_001:0575b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "短命夭壽。",
        "from": "T20n1133_001:0575b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由持此陀羅尼故。",
        "from": "T20n1133_001:0575b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心清淨業障銷滅。",
        "from": "T20n1133_001:0575b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更增壽命。",
        "from": "T20n1133_001:0575b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有修習三摩地者。",
        "from": "T20n1133_001:0575b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現生不轉父母生身。",
        "from": "T20n1133_001:0575b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲五神通。",
        "from": "T20n1133_001:0575b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凌虛自在。",
        "from": "T20n1133_001:0575b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說三摩地門。",
        "from": "T20n1133_001:0575b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結加趺坐端身閉目。",
        "from": "T20n1133_001:0575b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手重疊安於臍下。",
        "from": "T20n1133_001:0575b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於虛空中遍想諸佛。",
        "from": "T20n1133_001:0575b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了分明。",
        "from": "T20n1133_001:0575b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於自身中當心觀如滿月。",
        "from": "T20n1133_001:0575b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明瑩徹。",
        "from": "T20n1133_001:0575b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上有五股金剛杵。",
        "from": "T20n1133_001:0575b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形漸大如等身。",
        "from": "T20n1133_001:0575b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變為降三世菩薩。",
        "from": "T20n1133_001:0575b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂有毘盧遮那佛。",
        "from": "T20n1133_001:0575b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從佛遍身遍毛孔中。",
        "from": "T20n1133_001:0575b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出甘露灌頂。",
        "from": "T20n1133_001:0575b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "注自身入於心中。",
        "from": "T20n1133_001:0575b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想金剛薩埵菩薩。",
        "from": "T20n1133_001:0575b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結金剛壽命菩薩陀羅尼印。",
        "from": "T20n1133_001:0575b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手金剛拳。",
        "from": "T20n1133_001:0575b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以頭指右押左相鉤。",
        "from": "T20n1133_001:0575b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於頂上。",
        "from": "T20n1133_001:0575b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦金剛壽命陀羅尼七遍。",
        "from": "T20n1133_001:0575c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於額上。",
        "from": "T20n1133_001:0575c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分手繫項後。",
        "from": "T20n1133_001:0575c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直舒二指。",
        "from": "T20n1133_001:0575c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍身旋轉如擐甲冑勢。",
        "from": "T20n1133_001:0575c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲冑真言曰。",
        "from": "T20n1133_001:0575c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵砧讁簪反嚩日囉二合欲由加持此印故。",
        "from": "T20n1133_001:0575c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得身如金剛。",
        "from": "T20n1133_001:0575c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不壞離諸災橫。",
        "from": "T20n1133_001:0575c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者歡喜生大恭敬。",
        "from": "T20n1133_001:0575c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說護摩除災延命壇。",
        "from": "T20n1133_001:0575c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治一淨室。",
        "from": "T20n1133_001:0575c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於東邊安金剛壽命菩薩像。",
        "from": "T20n1133_001:0575c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懸諸幡蓋。",
        "from": "T20n1133_001:0575c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像前作三肘方壇。",
        "from": "T20n1133_001:0575c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掘深去瓦礫骨灰諸不淨物等。",
        "from": "T20n1133_001:0575c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其地無諸穢物還取舊土填之。",
        "from": "T20n1133_001:0575c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土若有餘是大吉祥相。",
        "from": "T20n1133_001:0575c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法易成就。",
        "from": "T20n1133_001:0575c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有穢物。",
        "from": "T20n1133_001:0575c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即取河兩岸淨土填平。",
        "from": "T20n1133_001:0575c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和諸香瞿摩夷塗。",
        "from": "T20n1133_001:0575c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇中心畫以白粉。",
        "from": "T20n1133_001:0575c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作一肘半金剛甲冑。",
        "from": "T20n1133_001:0575c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中央穿一爐。",
        "from": "T20n1133_001:0575c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深半肘。",
        "from": "T20n1133_001:0575c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周圍緣。",
        "from": "T20n1133_001:0575c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不欲穿者安火爐。",
        "from": "T20n1133_001:0575c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者火爐前坐。",
        "from": "T20n1133_001:0575c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇四面供養飲食諸果子等。",
        "from": "T20n1133_001:0575c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇四角安瓶。",
        "from": "T20n1133_001:0575c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於爐中然炭。",
        "from": "T20n1133_001:0575c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先辦乳木長十指麁如大指二十一。",
        "from": "T20n1133_001:0575c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莖以酥搵兩頭。",
        "from": "T20n1133_001:0575c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦金剛壽命真言。",
        "from": "T20n1133_001:0575c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲於火中。",
        "from": "T20n1133_001:0575c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然熾盛已。",
        "from": "T20n1133_001:0575c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於火中想八葉蓮華。",
        "from": "T20n1133_001:0575c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於華胎中想阿字。",
        "from": "T20n1133_001:0575c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明遍照。",
        "from": "T20n1133_001:0575c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成金剛壽命菩薩。",
        "from": "T20n1133_001:0575c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以四字四明。",
        "from": "T20n1133_001:0575c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引請菩薩入火爐。",
        "from": "T20n1133_001:0575c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸供養。",
        "from": "T20n1133_001:0575c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以右手半金剛印。",
        "from": "T20n1133_001:0575c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以水灑火令淨。",
        "from": "T20n1133_001:0575c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次取一器盛滿融酥。",
        "from": "T20n1133_001:0575c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以骨屢草青者一莖。",
        "from": "T20n1133_001:0575c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搵酥。",
        "from": "T20n1133_001:0575c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦金剛壽命陀羅尼一遍。",
        "from": "T20n1133_001:0575c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲於火中。",
        "from": "T20n1133_001:0575c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一百八莖或一千八莖。",
        "from": "T20n1133_001:0575c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次後擲燒諸香乳酪。",
        "from": "T20n1133_001:0575c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦已畢。",
        "from": "T20n1133_001:0575c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以三滿杓酥傾於火中。",
        "from": "T20n1133_001:0575c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初後如是。",
        "from": "T20n1133_001:0575c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能於三長齋月或自本生日。",
        "from": "T20n1133_001:0575c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是供養。",
        "from": "T20n1133_001:0575c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除災難增益壽命。",
        "from": "T20n1133_001:0576a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土安泰無諸災疫風雨以時。",
        "from": "T20n1133_001:0576a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切賢聖擁護其人。",
        "from": "T20n1133_001:0576a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛壽命陀羅尼念誦法",
        "from": "T20n1133_001:0576a03_100",
        "context_with_next_sentence": false
    }
]