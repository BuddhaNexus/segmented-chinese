{
    "T47n1997_001:0713b23_0": "圓悟佛果禪師語錄序",
    "T47n1997_001:0713b25_0": "龍圖閣直學士左朝奉大夫知處州",
    "T47n1997_001:0713b26_0": "軍州事兼管內勸農使耿延禧撰",
    "T47n1997_001:0713b27_0": "佛以一音。",
    "T47n1997_001:0713b27_1": "而演說法。",
    "T47n1997_001:0713b27_2": "故一切法。",
    "T47n1997_001:0713b27_3": "同此一音。",
    "T47n1997_001:0713b27_4": "三世諸佛此一音。",
    "T47n1997_001:0713b28_5": "六代祖師此一音。",
    "T47n1997_001:0713b28_6": "天下老和尚此一音。",
    "T47n1997_001:0713b29_7": "吾有正法眼藏。",
    "T47n1997_001:0713b29_8": "分付摩訶迦葉。",
    "T47n1997_001:0713b29_9": "乃此一音。",
    "T47n1997_001:0713c01_10": "正法眼藏向這瞎驢邊滅却。",
    "T47n1997_001:0713c01_11": "亦此一音。",
    "T47n1997_001:0713c02_12": "以至風動林響泉鳴谷應亦此音。",
    "T47n1997_001:0713c02_13": "雷霆霹靂雨雹交橫。",
    "T47n1997_001:0713c03_14": "亦此音。",
    "T47n1997_001:0713c03_15": "人語市聲鵓鳩蛇蟇倉庚寒蟬亦此音。",
    "T47n1997_001:0713c04_16": "麻三斤。",
    "T47n1997_001:0713c04_17": "庭前柏樹子。",
    "T47n1997_001:0713c04_18": "得髓得皮。",
    "T47n1997_001:0713c05_19": "老兄未徹。",
    "T47n1997_001:0713c05_20": "拄杖子[跳兆+孛]跳。",
    "T47n1997_001:0713c05_21": "上三十三天。",
    "T47n1997_001:0713c05_22": "觀音胡餅。",
    "T47n1997_001:0713c06_23": "却是饅頭。",
    "T47n1997_001:0713c06_24": "無非此音。",
    "T47n1997_001:0713c06_25": "以至一切語言。",
    "T47n1997_001:0713c06_26": "銅鑼盛油。",
    "T47n1997_001:0713c07_27": "銀椀盛雪。",
    "T47n1997_001:0713c07_28": "鷓鴣啼華。",
    "T47n1997_001:0713c07_29": "珊瑚撑月。",
    "T47n1997_001:0713c07_30": "不落不昧。",
    "T47n1997_001:0713c08_31": "通身遍身。",
    "T47n1997_001:0713c08_32": "將心與汝安。",
    "T47n1997_001:0713c08_33": "吸盡西江水。",
    "T47n1997_001:0713c08_34": "亦無非此音。",
    "T47n1997_001:0713c09_35": "不作此音會。",
    "T47n1997_001:0713c09_36": "而作語言謷訛。",
    "T47n1997_001:0713c09_37": "妄生分別。",
    "T47n1997_001:0713c10_38": "無有是處。",
    "T47n1997_001:0713c10_39": "昔楊岐以此音。",
    "T47n1997_001:0713c10_40": "簧鼓天下。",
    "T47n1997_001:0713c10_41": "至圓悟大禪師。",
    "T47n1997_001:0713c11_42": "此音益震。",
    "T47n1997_001:0713c11_43": "師因頻呼小玉之音與檀郎認得之音。",
    "T47n1997_001:0713c12_44": "然後大唱此音。",
    "T47n1997_001:0713c12_45": "不數德山歌。",
    "T47n1997_001:0713c13_46": "壓倒雲門曲。",
    "T47n1997_001:0713c13_47": "凡樓子我若無心之音。",
    "T47n1997_001:0713c13_48": "及盤山紅輪西去之音。",
    "T47n1997_001:0713c14_49": "皆當立下風。",
    "T47n1997_001:0713c14_50": "盡是老凍膿。",
    "T47n1997_001:0713c15_0": "所以於建炎中興天子前。",
    "T47n1997_001:0713c15_1": "奏此一音。",
    "T47n1997_001:0713c15_2": "四海寂默。",
    "T47n1997_001:0713c16_3": "而無敢鳴。",
    "T47n1997_001:0713c16_4": "雲居安樂堂上。",
    "T47n1997_001:0713c16_5": "擅此一音。",
    "T47n1997_001:0713c16_6": "眾人憎嫉。",
    "T47n1997_001:0713c17_7": "而無敢和。",
    "T47n1997_001:0713c17_8": "且道。",
    "T47n1997_001:0713c17_9": "此老子乘誰恩力。",
    "T47n1997_001:0713c17_10": "得恁麼奇特。",
    "T47n1997_001:0713c18_11": "昔孔子窮於陳蔡之間。",
    "T47n1997_001:0713c18_12": "左據槁木。",
    "T47n1997_001:0713c19_0": "右擊槁枝而歌。",
    "T47n1997_001:0713c19_1": "焱氏之風。",
    "T47n1997_001:0713c19_2": "有其具而無其數。",
    "T47n1997_001:0713c20_0": "有其聲而無宮角。",
    "T47n1997_001:0713c20_1": "木聲與人聲。",
    "T47n1997_001:0713c20_2": "犁然有當於人之心。",
    "T47n1997_001:0713c21_3": "乃曰。",
    "T47n1997_001:0713c21_4": "今之歌者其誰乎。",
    "T47n1997_001:0713c21_5": "是亦此音。",
    "T47n1997_001:0713c21_6": "而世未之知也。",
    "T47n1997_001:0713c22_7": "圓悟老師其知之矣。",
    "T47n1997_001:0713c22_8": "予蚤事佛鑑。",
    "T47n1997_001:0713c23_9": "晚見老師。",
    "T47n1997_001:0713c23_10": "叩此一音。",
    "T47n1997_001:0713c23_11": "更無別調。",
    "T47n1997_001:0713c23_12": "學徒若平亦唱師家曲者。",
    "T47n1997_001:0713c24_13": "集師語要將以刊行。",
    "T47n1997_001:0713c24_14": "求為序篇。",
    "T47n1997_001:0713c25_15": "以冠卷首。",
    "T47n1997_001:0713c25_16": "若知此音。",
    "T47n1997_001:0713c25_17": "則圓悟老師功不浪施。",
    "T47n1997_001:0713c26_18": "若不知．此音。",
    "T47n1997_001:0713c26_19": "而以語言文字求會解者。",
    "T47n1997_001:0713c26_20": "是人行邪道。",
    "T47n1997_001:0713c27_21": "不能見老師云。",
    "T47n1997_001:0713c27_22": "紹興三年十二月二十日序。",
    "T47n1997_001:0713c29_0": "圓悟禪師克勤。",
    "T47n1997_001:0713c29_1": "甞被遇今上皇帝。",
    "T47n1997_001:0713c29_2": "對揚正法眼藏。",
    "T47n1997_001:0714a01_3": "其道盛行。",
    "T47n1997_001:0714a01_4": "僧若平。",
    "T47n1997_001:0714a01_5": "鳩工聚材欲以師法語。",
    "T47n1997_001:0714a02_6": "傳諸天下。",
    "T47n1997_001:0714a02_7": "以待後學。",
    "T47n1997_001:0714a02_8": "託嚴州天寧老元弼。",
    "T47n1997_001:0714a03_0": "丐予為敘。",
    "T47n1997_001:0714a03_1": "吁此果師之本旨哉。",
    "T47n1997_001:0714a03_2": "予聞師常偃處一室。",
    "T47n1997_001:0714a04_3": "坐斷語言。",
    "T47n1997_001:0714a04_4": "轉無上法輪。",
    "T47n1997_001:0714a04_5": "不容擬議。",
    "T47n1997_001:0714a04_6": "揚眉開口。",
    "T47n1997_001:0714a05_7": "立便喪身。",
    "T47n1997_001:0714a05_8": "纔涉廉纖。",
    "T47n1997_001:0714a05_9": "老拳隨起。",
    "T47n1997_001:0714a05_10": "每舉到不與萬法為侶公案。",
    "T47n1997_001:0714a06_11": "已是拕泥帶水。",
    "T47n1997_001:0714a06_12": "落第二義。",
    "T47n1997_001:0714a07_13": "今乃欲褒集其平昔咳唾之音。",
    "T47n1997_001:0714a07_14": "鋪陳而揄揚之。",
    "T47n1997_001:0714a08_15": "師其聞而有不釋然者乎。",
    "T47n1997_001:0714a08_16": "雖然師之不得已而有言。",
    "T47n1997_001:0714a09_17": "我知之矣。",
    "T47n1997_001:0714a09_18": "譬彼時雨。",
    "T47n1997_001:0714a09_19": "隨物濟潤。",
    "T47n1997_001:0714a10_20": "遐陬僻處。",
    "T47n1997_001:0714a10_21": "枯根蠧芽。",
    "T47n1997_001:0714a10_22": "若大若小。",
    "T47n1997_001:0714a10_23": "各各霑足。",
    "T47n1997_001:0714a11_24": "而太虛空本自無相。",
    "T47n1997_001:0714a11_25": "亦無有作。",
    "T47n1997_001:0714a11_26": "觀覽于斯者。",
    "T47n1997_001:0714a12_27": "宜得之言意之表。",
    "T47n1997_001:0714a12_28": "此集之行。",
    "T47n1997_001:0714a12_29": "在在處處。",
    "T47n1997_001:0714a12_30": "當有神物護持云。",
    "T47n1997_001:0714a13_31": "紹興四年二月日。",
    "T47n1997_001:0714a13_32": "檢校少保定國軍節度使知樞密院事南陽郡開國侯張浚序。",
    "T47n1997_001:0714a18_0": "圓悟佛果禪師語錄目錄",
    "T47n1997_001:0714a20_0": "卷第一　　　上堂一",
    "T47n1997_001:0714a21_0": "卷第二　　　上堂二",
    "T47n1997_001:0714a22_0": "卷第三　　　上堂三",
    "T47n1997_001:0714a23_0": "卷第四　　　上堂四",
    "T47n1997_001:0714a24_0": "卷第五　　　上堂五",
    "T47n1997_001:0714a25_0": "卷第六　　　上堂六",
    "T47n1997_001:0714a26_0": "卷第七　　　上堂七",
    "T47n1997_001:0714a27_0": "卷第八　　　上堂八　小參一",
    "T47n1997_001:0714a28_0": "卷第九　　　小參二",
    "T47n1997_001:0714a29_0": "卷第十　　　小參三",
    "T47n1997_001:0714b01_0": "卷第十一　　小參四",
    "T47n1997_001:0714b02_0": "卷第十二　　小參五",
    "T47n1997_001:0714b03_0": "卷第十三　　小參六　普說",
    "T47n1997_001:0714b04_0": "卷第十四　　法語上",
    "T47n1997_001:0714b05_0": "卷第十五　　法語中",
    "T47n1997_001:0714b06_0": "卷第十六　　法語下　書　拈古上",
    "T47n1997_001:0714b07_0": "卷第十七　　拈古中",
    "T47n1997_001:0714b08_0": "卷第十八　　拈古下　頌古上",
    "T47n1997_001:0714b09_0": "卷第十九　　頌古下",
    "T47n1997_001:0714b10_0": "卷第二十　　偈頌　真讚　雜著　佛事圓悟佛果禪師語錄目錄終圓悟佛果禪師語錄卷第一宋平江府虎丘山門人紹隆等編上堂一住成都府崇寧萬壽禪寺。",
    "T47n1997_001:0714b18_1": "師在昭覺。",
    "T47n1997_001:0714b18_2": "初受六祖請。",
    "T47n1997_001:0714b19_3": "拈帖示眾云。",
    "T47n1997_001:0714b19_4": "幸自無事。",
    "T47n1997_001:0714b19_5": "須要箇護身符子作麼。",
    "T47n1997_001:0714b20_6": "然禍不入慎家之門。",
    "T47n1997_001:0714b20_7": "且作麼生斷這公案。",
    "T47n1997_001:0714b21_8": "會麼。",
    "T47n1997_001:0714b21_9": "兵隨印轉。",
    "T47n1997_001:0714b21_10": "請維那剖露。",
    "T47n1997_001:0714b22_0": "舉法衣云。",
    "T47n1997_001:0714b22_1": "古人事不獲已。",
    "T47n1997_001:0714b22_2": "掛弊垢衣。",
    "T47n1997_001:0714b22_3": "如今推免不下。",
    "T47n1997_001:0714b23_4": "入這群隊去也。",
    "T47n1997_001:0714b23_5": "大庾嶺頭藏不得。",
    "T47n1997_001:0714b23_6": "如今也要大家知。",
    "T47n1997_001:0714b24_7": "指法座云。",
    "T47n1997_001:0714b24_8": "盡十方都是箇寶華王座。",
    "T47n1997_001:0714b25_9": "長在裏許。",
    "T47n1997_001:0714b25_10": "又何須特地。",
    "T47n1997_001:0714b25_11": "車不橫推。",
    "T47n1997_001:0714b25_12": "理不曲斷。",
    "T47n1997_001:0714b27_0": "陞座乃云。",
    "T47n1997_001:0714b27_1": "蝸牛角上三千界。",
    "T47n1997_001:0714b27_2": "雲月溪山共一家。",
    "T47n1997_001:0714b28_3": "既爾業緣無避處。",
    "T47n1997_001:0714b28_4": "不如隨分納些些。",
    "T47n1997_001:0714b28_5": "一不做二不休。",
    "T47n1997_001:0714b29_6": "還有共相建立底麼。",
    "T47n1997_001:0714b29_7": "僧問。",
    "T47n1997_001:0714b29_8": "逢人即不出。",
    "T47n1997_001:0714c01_9": "出即便為人。",
    "T47n1997_001:0714c01_10": "逢人即出。",
    "T47n1997_001:0714c01_11": "出即不為人。",
    "T47n1997_001:0714c01_12": "未審如何。",
    "T47n1997_001:0714c02_13": "師云。",
    "T47n1997_001:0714c02_14": "兩箇無孔鐵鎚。",
    "T47n1997_001:0714c02_15": "進云。",
    "T47n1997_001:0714c02_16": "把斷要津。",
    "T47n1997_001:0714c03_17": "還有為人處也無。",
    "T47n1997_001:0714c03_18": "師云。",
    "T47n1997_001:0714c03_19": "百雜碎。",
    "T47n1997_001:0714c03_20": "進云。",
    "T47n1997_001:0714c03_21": "恁麼則如龍得水去也。",
    "T47n1997_001:0714c04_22": "師云。",
    "T47n1997_001:0714c04_23": "知則得。",
    "T47n1997_001:0714c04_24": "問承師有言。",
    "T47n1997_001:0714c05_25": "如今也要大家知。",
    "T47n1997_001:0714c05_26": "未審知箇什麼。",
    "T47n1997_001:0714c05_27": "師云。",
    "T47n1997_001:0714c05_28": "風行草偃。",
    "T47n1997_001:0714c06_29": "進云。",
    "T47n1997_001:0714c06_30": "恁麼則恩深無語。",
    "T47n1997_001:0714c06_31": "懷抱分明。",
    "T47n1997_001:0714c07_0": "師云。",
    "T47n1997_001:0714c07_1": "分明底事又作麼生。",
    "T47n1997_001:0714c07_2": "僧云。",
    "T47n1997_001:0714c07_3": "通身無影象。",
    "T47n1997_001:0714c08_0": "步步絕行蹤。",
    "T47n1997_001:0714c08_1": "師云。",
    "T47n1997_001:0714c08_2": "一不成二不是。",
    "T47n1997_001:0714c08_3": "問如何是道中至寶。",
    "T47n1997_001:0714c09_4": "師云。",
    "T47n1997_001:0714c09_5": "待儞脫却業識來向儞道。",
    "T47n1997_001:0714c09_6": "進云。",
    "T47n1997_001:0714c10_7": "業識已脫。",
    "T47n1997_001:0714c10_8": "請師指示。",
    "T47n1997_001:0714c10_9": "師云。",
    "T47n1997_001:0714c10_10": "種穀不生豆。",
    "T47n1997_001:0714c11_0": "問寶劍出匣海蚌初開。",
    "T47n1997_001:0714c11_1": "向上宗乘乞師直指。",
    "T47n1997_001:0714c12_0": "師云。",
    "T47n1997_001:0714c12_1": "橫按鏌[鉺*ㄗ]全正令。",
    "T47n1997_001:0714c12_2": "進云。",
    "T47n1997_001:0714c12_3": "恁麼則坐斷十方去也。",
    "T47n1997_001:0714c13_4": "師云。",
    "T47n1997_001:0714c13_5": "七縱八橫。",
    "T47n1997_001:0714c13_6": "進云。",
    "T47n1997_001:0714c13_7": "寶藏撥開於此日。",
    "T47n1997_001:0714c14_8": "五葉千燈事轉新。",
    "T47n1997_001:0714c14_9": "師云。",
    "T47n1997_001:0714c14_10": "曲不藏直。",
    "T47n1997_001:0714c14_11": "乃云。",
    "T47n1997_001:0714c15_0": "一向目視雲霄壁立千仞。",
    "T47n1997_001:0714c15_1": "則孤負諸聖。",
    "T47n1997_001:0714c15_2": "一向拕泥涉水灰頭土面。",
    "T47n1997_001:0714c16_3": "則埋沒自己。",
    "T47n1997_001:0714c16_4": "如今恁麼也得。",
    "T47n1997_001:0714c17_5": "不恁麼也得。",
    "T47n1997_001:0714c17_6": "且貴正眼流通。",
    "T47n1997_001:0714c17_7": "還委悉麼。",
    "T47n1997_001:0714c18_0": "直饒高步毘盧頂。",
    "T47n1997_001:0714c18_1": "不稟釋迦文。",
    "T47n1997_001:0714c18_2": "婢視聲聞。",
    "T47n1997_001:0714c18_3": "奴呼菩薩底來。",
    "T47n1997_001:0714c19_4": "也須亡鋒結舌。",
    "T47n1997_001:0714c19_5": "自餘故是出頭不得。",
    "T47n1997_001:0714c20_6": "所以道。",
    "T47n1997_001:0714c20_7": "三世諸佛只言自知。",
    "T47n1997_001:0714c20_8": "歷代祖師全提不起。",
    "T47n1997_001:0714c21_9": "一大藏教詮註不及。",
    "T47n1997_001:0714c21_10": "明眼衲僧自救不了。",
    "T47n1997_001:0714c22_11": "若據本分草料。",
    "T47n1997_001:0714c22_12": "猶是節外生枝。",
    "T47n1997_001:0714c22_13": "不涉化門一句。",
    "T47n1997_001:0714c23_14": "作麼生道。",
    "T47n1997_001:0714c23_15": "陣雲橫海上。",
    "T47n1997_001:0714c23_16": "拔劍攪龍門。",
    "T47n1997_001:0714c24_17": "下座。",
    "T47n1997_001:0714c24_18": "次受昭覺請。",
    "T47n1997_001:0714c24_19": "拈帖云。",
    "T47n1997_001:0714c24_20": "有眼者見。",
    "T47n1997_001:0714c24_21": "有耳者聞。",
    "T47n1997_001:0714c25_22": "不從天降。",
    "T47n1997_001:0714c25_23": "不從地涌。",
    "T47n1997_001:0714c25_24": "既然符到奉行。",
    "T47n1997_001:0714c26_0": "豈可囊藏被蓋。",
    "T47n1997_001:0714c26_1": "請維那宣過。",
    "T47n1997_001:0714c27_0": "陞座云。",
    "T47n1997_001:0714c27_1": "火不待日而熱。",
    "T47n1997_001:0714c27_2": "風不待月而涼。",
    "T47n1997_001:0714c27_3": "鶴脛自長。",
    "T47n1997_001:0714c28_4": "鳧脛自短。",
    "T47n1997_001:0714c28_5": "松直棘曲。",
    "T47n1997_001:0714c28_6": "鵠白烏玄。",
    "T47n1997_001:0714c28_7": "頭頭露現。",
    "T47n1997_001:0714c29_8": "若委悉得。",
    "T47n1997_001:0714c29_9": "隨處作主。",
    "T47n1997_001:0714c29_10": "遇緣即宗。",
    "T47n1997_001:0714c29_11": "竿木隨身。",
    "T47n1997_001:0715a01_12": "逢場作戲。",
    "T47n1997_001:0715a01_13": "有麼有麼。",
    "T47n1997_001:0715a01_14": "問靈雲見桃華。",
    "T47n1997_001:0715a01_15": "衲子如何通信。",
    "T47n1997_001:0715a02_16": "師云。",
    "T47n1997_001:0715a02_17": "滿山紅爍爍。",
    "T47n1997_001:0715a02_18": "進云。",
    "T47n1997_001:0715a02_19": "上機頓曉。",
    "T47n1997_001:0715a03_20": "中下何如。",
    "T47n1997_001:0715a03_21": "師云。",
    "T47n1997_001:0715a03_22": "頂門上著眼。",
    "T47n1997_001:0715a03_23": "進云。",
    "T47n1997_001:0715a03_24": "功不浪施去也。",
    "T47n1997_001:0715a04_25": "師云。",
    "T47n1997_001:0715a04_26": "儞脚跟下作麼生。",
    "T47n1997_001:0715a04_27": "僧云。",
    "T47n1997_001:0715a04_28": "踏破澄潭月。",
    "T47n1997_001:0715a05_29": "師云。",
    "T47n1997_001:0715a05_30": "當空轟霹靂。",
    "T47n1997_001:0715a05_31": "進云。",
    "T47n1997_001:0715a05_32": "泥牛吼處天關轉。",
    "T47n1997_001:0715a06_33": "木馬嘶時地軸搖。",
    "T47n1997_001:0715a06_34": "師云。",
    "T47n1997_001:0715a06_35": "闍梨還和得麼。",
    "T47n1997_001:0715a06_36": "僧拍手三下。",
    "T47n1997_001:0715a07_37": "師云。",
    "T47n1997_001:0715a07_38": "錯錯錯。",
    "T47n1997_001:0715a07_39": "進云。",
    "T47n1997_001:0715a07_40": "靈山授記未到如此。",
    "T47n1997_001:0715a08_41": "師云。",
    "T47n1997_001:0715a08_42": "不是苦心人不知。",
    "T47n1997_001:0715a08_43": "進云。",
    "T47n1997_001:0715a08_44": "輕輕躡足龍門過。",
    "T47n1997_001:0715a09_45": "惹得清風動地來。",
    "T47n1997_001:0715a09_46": "師云。",
    "T47n1997_001:0715a09_47": "被闍梨帶累。",
    "T47n1997_001:0715a10_0": "問大庾嶺頭提不起。",
    "T47n1997_001:0715a10_1": "如今何得在師邊。",
    "T47n1997_001:0715a10_2": "師舉拂子。",
    "T47n1997_001:0715a11_3": "進云。",
    "T47n1997_001:0715a11_4": "拈來當宇宙。",
    "T47n1997_001:0715a11_5": "錦上更鋪華。",
    "T47n1997_001:0715a11_6": "師云。",
    "T47n1997_001:0715a12_0": "一葉落知天下秋。",
    "T47n1997_001:0715a12_1": "進云。",
    "T47n1997_001:0715a12_2": "九九八十一。",
    "T47n1997_001:0715a12_3": "還歸有道君。",
    "T47n1997_001:0715a13_4": "師云。",
    "T47n1997_001:0715a13_5": "但恁麼信取。",
    "T47n1997_001:0715a13_6": "問兵隨印轉。",
    "T47n1997_001:0715a13_7": "和尚今日兵印在手。",
    "T47n1997_001:0715a14_8": "如何受用。",
    "T47n1997_001:0715a14_9": "師云。",
    "T47n1997_001:0715a14_10": "看取令行時。",
    "T47n1997_001:0715a14_11": "進云。",
    "T47n1997_001:0715a15_12": "和尚還用得斬諸侯劍麼。",
    "T47n1997_001:0715a15_13": "師云。",
    "T47n1997_001:0715a15_14": "嚇殺人。",
    "T47n1997_001:0715a15_15": "進云。",
    "T47n1997_001:0715a16_16": "四海浪平龍睡穩。",
    "T47n1997_001:0715a16_17": "九天雲靜鶴飛高。",
    "T47n1997_001:0715a16_18": "師云。",
    "T47n1997_001:0715a17_0": "却得闍梨共證明。",
    "T47n1997_001:0715a17_1": "進云。",
    "T47n1997_001:0715a17_2": "昭覺從此佛日光輝去也。",
    "T47n1997_001:0715a18_3": "師云。",
    "T47n1997_001:0715a18_4": "也不消得。",
    "T47n1997_001:0715a18_5": "乃云。",
    "T47n1997_001:0715a18_6": "我本無心有所希求。",
    "T47n1997_001:0715a19_7": "今此寶藏自然而至。",
    "T47n1997_001:0715a19_8": "上是天下是地。",
    "T47n1997_001:0715a19_9": "左邊厨庫右邊僧堂。",
    "T47n1997_001:0715a20_10": "前是佛殿三門。",
    "T47n1997_001:0715a20_11": "後是寢堂方丈。",
    "T47n1997_001:0715a21_12": "寶藏在什麼處。",
    "T47n1997_001:0715a21_13": "還見麼。",
    "T47n1997_001:0715a21_14": "如今坐立儼然。",
    "T47n1997_001:0715a21_15": "見聞不昧。",
    "T47n1997_001:0715a22_16": "光輝溢目。",
    "T47n1997_001:0715a22_17": "寂爾無垠。",
    "T47n1997_001:0715a22_18": "盡凡聖情脫知見縛。",
    "T47n1997_001:0715a23_19": "長河為酥酪。",
    "T47n1997_001:0715a23_20": "大地變黃金。",
    "T47n1997_001:0715a23_21": "從自己胸襟流出一句。",
    "T47n1997_001:0715a24_22": "作麼生道。",
    "T47n1997_001:0715a24_23": "今古長如白練飛。",
    "T47n1997_001:0715a24_24": "一條界破青山色。",
    "T47n1997_001:0715a25_25": "下座。",
    "T47n1997_001:0715a26_0": "指方丈云。",
    "T47n1997_001:0715a26_1": "衲僧家。",
    "T47n1997_001:0715a26_2": "魔宮虎穴尚乃安居。",
    "T47n1997_001:0715a26_3": "何況利生接物處所。",
    "T47n1997_001:0715a27_4": "還知此室麼。",
    "T47n1997_001:0715a27_5": "諸天擁護。",
    "T47n1997_001:0715a27_6": "諸聖證明。",
    "T47n1997_001:0715a28_7": "其善知識端居此中。",
    "T47n1997_001:0715a28_8": "與人解黏去縛。",
    "T47n1997_001:0715a28_9": "既有如是勝相。",
    "T47n1997_001:0715a29_10": "山僧於中如何施設。",
    "T47n1997_001:0715a29_11": "不入驚人浪。",
    "T47n1997_001:0715b01_12": "難尋稱意魚。",
    "T47n1997_001:0715b01_13": "作麼生是入門句。",
    "T47n1997_001:0715b01_14": "水歸巨海波濤靜。",
    "T47n1997_001:0715b02_15": "雲到蒼梧氣象閑。",
    "T47n1997_001:0715b02_16": "便入方丈。",
    "T47n1997_001:0715b03_0": "開堂拈疏示眾云。",
    "T47n1997_001:0715b03_1": "靈山單傳密旨。",
    "T47n1997_001:0715b03_2": "曹溪嫡嗣正音。",
    "T47n1997_001:0715b04_3": "盡在箇裏。",
    "T47n1997_001:0715b04_4": "請表白拈出。",
    "T47n1997_001:0715b05_0": "指法座云。",
    "T47n1997_001:0715b05_1": "三世諸佛於此轉法輪。",
    "T47n1997_001:0715b05_2": "歷代宗師於此提祖印。",
    "T47n1997_001:0715b06_3": "欲行千里一步為初。",
    "T47n1997_001:0715b06_4": "不免起模畫樣去也。",
    "T47n1997_001:0715b07_5": "遂陞座拈香云。",
    "T47n1997_001:0715b07_6": "奉為今上皇帝。",
    "T47n1997_001:0715b07_7": "祝嚴聖壽。",
    "T47n1997_001:0715b08_8": "萬歲萬歲萬萬歲。",
    "T47n1997_001:0715b08_9": "又拈香云。",
    "T47n1997_001:0715b08_10": "奉為判府內翰諸位勳貴。",
    "T47n1997_001:0715b09_11": "又拈香云。",
    "T47n1997_001:0715b09_12": "此一瓣香。",
    "T47n1997_001:0715b09_13": "不從葱嶺帶來。",
    "T47n1997_001:0715b10_14": "亦非胸襟流出。",
    "T47n1997_001:0715b10_15": "在南中見三十餘員尊宿。",
    "T47n1997_001:0715b11_16": "末後撞著箇老作家。",
    "T47n1997_001:0715b11_17": "被他一槌擊碎。",
    "T47n1997_001:0715b12_0": "今日對眾說破。",
    "T47n1997_001:0715b12_1": "奉為見住蘄州五祖演和尚。",
    "T47n1997_001:0715b13_0": "以酬法乳。",
    "T47n1997_001:0715b13_1": "保福贊和尚白槌云。",
    "T47n1997_001:0715b13_2": "法筵龍象眾。",
    "T47n1997_001:0715b14_0": "當觀第一義。",
    "T47n1997_001:0715b14_1": "師云。",
    "T47n1997_001:0715b14_2": "把斷世界還觀得也無。",
    "T47n1997_001:0715b14_3": "直饒一槌未落已前。",
    "T47n1997_001:0715b15_4": "薦得猶落二三。",
    "T47n1997_001:0715b15_5": "且作麼生是第一義。",
    "T47n1997_001:0715b16_6": "有知落處底麼。",
    "T47n1997_001:0715b16_7": "出眾相見。",
    "T47n1997_001:0715b16_8": "僧問。",
    "T47n1997_001:0715b16_9": "釋迦說法多寶證明。",
    "T47n1997_001:0715b17_10": "和尚開堂內翰臨顧。",
    "T47n1997_001:0715b17_11": "半山相見即不問。",
    "T47n1997_001:0715b18_12": "妙峯孤頂事如何。",
    "T47n1997_001:0715b18_13": "師云。",
    "T47n1997_001:0715b18_14": "瑞氣騰空。",
    "T47n1997_001:0715b19_15": "進云。",
    "T47n1997_001:0715b19_16": "恁麼則片雲生谷口。",
    "T47n1997_001:0715b19_17": "萬仞碧嵯峩。",
    "T47n1997_001:0715b19_18": "師云。",
    "T47n1997_001:0715b20_19": "能有幾人知。",
    "T47n1997_001:0715b20_20": "進云。",
    "T47n1997_001:0715b20_21": "聖明天子以何報答。",
    "T47n1997_001:0715b20_22": "師舉拂子。",
    "T47n1997_001:0715b21_23": "進云。",
    "T47n1997_001:0715b21_24": "天上有星皆拱北。",
    "T47n1997_001:0715b21_25": "人間無水不朝東。",
    "T47n1997_001:0715b22_26": "師云。",
    "T47n1997_001:0715b22_27": "且得領話。",
    "T47n1997_001:0715b22_28": "問七擒七縱則不問。",
    "T47n1997_001:0715b22_29": "賓主相逢事若何。",
    "T47n1997_001:0715b23_30": "師云。",
    "T47n1997_001:0715b23_31": "寶劍倚天光燦爛。",
    "T47n1997_001:0715b23_32": "進云。",
    "T47n1997_001:0715b24_0": "碧眼胡僧笑點頭。",
    "T47n1997_001:0715b24_1": "師云。",
    "T47n1997_001:0715b24_2": "相識滿天下。",
    "T47n1997_001:0715b24_3": "進云。",
    "T47n1997_001:0715b24_4": "昨夜三更明月下。",
    "T47n1997_001:0715b25_5": "奪取驪珠歸去來。",
    "T47n1997_001:0715b25_6": "師云。",
    "T47n1997_001:0715b25_7": "誰是箇中人。",
    "T47n1997_001:0715b26_8": "僧問。",
    "T47n1997_001:0715b26_9": "三賢未達十聖難知。",
    "T47n1997_001:0715b26_10": "如何是此宗。",
    "T47n1997_001:0715b27_11": "師云。",
    "T47n1997_001:0715b27_12": "無孔鐵鎚當面擲。",
    "T47n1997_001:0715b27_13": "進云。",
    "T47n1997_001:0715b27_14": "嚇殺人。",
    "T47n1997_001:0715b27_15": "師云。",
    "T47n1997_001:0715b28_16": "嚇得一箇。",
    "T47n1997_001:0715b28_17": "進云。",
    "T47n1997_001:0715b28_18": "也知和尚慣恁麼。",
    "T47n1997_001:0715b28_19": "師云。",
    "T47n1997_001:0715b29_0": "儞又作麼生。",
    "T47n1997_001:0715b29_1": "僧云。",
    "T47n1997_001:0715b29_2": "鷂子過新羅。",
    "T47n1997_001:0715b29_3": "師云。",
    "T47n1997_001:0715b29_4": "自知較一半。",
    "T47n1997_001:0715c01_5": "乃云。",
    "T47n1997_001:0715c01_6": "玄機獨唱截斷眾流。",
    "T47n1997_001:0715c01_7": "擺撥不拘更無回互。",
    "T47n1997_001:0715c02_8": "直饒釋迦彌勒。",
    "T47n1997_001:0715c02_9": "不敢當頭著眼。",
    "T47n1997_001:0715c02_10": "倚天長劍凜凜神威。",
    "T47n1997_001:0715c03_11": "杲日當空澄澄光彩。",
    "T47n1997_001:0715c03_12": "無物不為妙用。",
    "T47n1997_001:0715c04_13": "無法不是真乘。",
    "T47n1997_001:0715c04_14": "控佛祖大機。",
    "T47n1997_001:0715c04_15": "廓人天正眼。",
    "T47n1997_001:0715c05_16": "當陽曉示。",
    "T47n1997_001:0715c05_17": "只貴知歸。",
    "T47n1997_001:0715c05_18": "纔涉思量。",
    "T47n1997_001:0715c05_19": "白雲萬里。",
    "T47n1997_001:0715c06_20": "是故先聖道。",
    "T47n1997_001:0715c06_21": "我此法印。",
    "T47n1997_001:0715c06_22": "為欲利益世間故說。",
    "T47n1997_001:0715c07_23": "在所遊方勿妄宣傳。",
    "T47n1997_001:0715c07_24": "今日人天普集。",
    "T47n1997_001:0715c07_25": "對眾分明剖露。",
    "T47n1997_001:0715c08_26": "舉拂示眾云。",
    "T47n1997_001:0715c08_27": "大眾見麼。",
    "T47n1997_001:0715c08_28": "一處真千處百處一時真。",
    "T47n1997_001:0715c09_29": "一句透千句百句一時透。",
    "T47n1997_001:0715c10_0": "拈起也乾坤岌崿。",
    "T47n1997_001:0715c10_1": "放下也河海晏清。",
    "T47n1997_001:0715c10_2": "不拈不放又作麼生。",
    "T47n1997_001:0715c11_3": "萬仞峯頭高著眼。",
    "T47n1997_001:0715c11_4": "大千沙界一浮漚。",
    "T47n1997_001:0715c12_5": "遂舉。",
    "T47n1997_001:0715c12_6": "法燈云。",
    "T47n1997_001:0715c12_7": "山僧本欲深棲巖竇隱遁過時。",
    "T47n1997_001:0715c13_8": "蓋緣清涼老人有未了底公案。",
    "T47n1997_001:0715c13_9": "出來為諸人了却。",
    "T47n1997_001:0715c14_10": "時有僧問。",
    "T47n1997_001:0715c14_11": "如何是未了公案。",
    "T47n1997_001:0715c14_12": "法燈便打云。",
    "T47n1997_001:0715c15_13": "祖禰不了殃及兒孫。",
    "T47n1997_001:0715c15_14": "僧云。",
    "T47n1997_001:0715c15_15": "過在什麼處。",
    "T47n1997_001:0715c16_16": "法燈云。",
    "T47n1997_001:0715c16_17": "過在儞殃及我。",
    "T47n1997_001:0715c16_18": "師云。",
    "T47n1997_001:0715c16_19": "法燈縱域中殺活握閫外威權。",
    "T47n1997_001:0715c17_20": "直得氣概驚群風標獨立。",
    "T47n1997_001:0715c18_0": "山僧卑志本亦如斯。",
    "T47n1997_001:0715c18_1": "今日出來。",
    "T47n1997_001:0715c18_2": "正緣五祖老師有箇見成公案。",
    "T47n1997_001:0715c19_3": "對眾舉揚。",
    "T47n1997_001:0715c19_4": "有不惜性命底。",
    "T47n1997_001:0715c20_0": "試出挨拶看。",
    "T47n1997_001:0715c20_1": "如無不免自拈自弄去也。",
    "T47n1997_001:0715c20_2": "喝一喝。",
    "T47n1997_001:0715c21_3": "以拂子擊禪床。",
    "T47n1997_001:0715c21_4": "下座。",
    "T47n1997_001:0715c22_0": "上堂。",
    "T47n1997_001:0715c22_1": "僧問。",
    "T47n1997_001:0715c22_2": "言無展事語不投機時。",
    "T47n1997_001:0715c22_3": "如何委悉。",
    "T47n1997_001:0715c23_0": "師云。",
    "T47n1997_001:0715c23_1": "未問已前百雜碎。",
    "T47n1997_001:0715c23_2": "進云。",
    "T47n1997_001:0715c23_3": "恁麼則只許老胡知也。",
    "T47n1997_001:0715c24_4": "師云。",
    "T47n1997_001:0715c24_5": "摸索不著。",
    "T47n1997_001:0715c24_6": "進云。",
    "T47n1997_001:0715c24_7": "千聖出來也摸索不著。",
    "T47n1997_001:0715c25_8": "師云。",
    "T47n1997_001:0715c25_9": "眼睛突出。",
    "T47n1997_001:0715c25_10": "乃云。",
    "T47n1997_001:0715c25_11": "不是目前法。",
    "T47n1997_001:0715c26_0": "亦非心外機。",
    "T47n1997_001:0715c26_1": "直下絕承當。",
    "T47n1997_001:0715c26_2": "當陽無向背。",
    "T47n1997_001:0715c26_3": "一處明去千百處光輝。",
    "T47n1997_001:0715c27_4": "一言通時千言百言透脫。",
    "T47n1997_001:0715c28_0": "非心非佛。",
    "T47n1997_001:0715c28_1": "拈向一邊。",
    "T47n1997_001:0715c28_2": "舉古舉今。",
    "T47n1997_001:0715c28_3": "撥致一處。",
    "T47n1997_001:0715c28_4": "只諸人分上還證據得麼。",
    "T47n1997_001:0715c29_5": "若證據得。",
    "T47n1997_001:0715c29_6": "三世諸佛於中成道。",
    "T47n1997_001:0716a01_7": "神通變化於中流出。",
    "T47n1997_001:0716a01_8": "大地山河於中發現。",
    "T47n1997_001:0716a02_9": "九類四生於中長育。",
    "T47n1997_001:0716a02_10": "且作麼生是該羅萬有一句。",
    "T47n1997_001:0716a03_11": "來年更有新條在。",
    "T47n1997_001:0716a03_12": "惱亂春風卒未休。",
    "T47n1997_001:0716a04_13": "下座。",
    "T47n1997_001:0716a05_0": "上堂。",
    "T47n1997_001:0716a05_1": "僧問。",
    "T47n1997_001:0716a05_2": "祖意敬意是同是別。",
    "T47n1997_001:0716a05_3": "師云。",
    "T47n1997_001:0716a05_4": "兩輪交互照。",
    "T47n1997_001:0716a06_5": "進云。",
    "T47n1997_001:0716a06_6": "恁麼則匹上不足也。",
    "T47n1997_001:0716a06_7": "師云。",
    "T47n1997_001:0716a06_8": "又被風吹別調中。",
    "T47n1997_001:0716a07_9": "問如何是涅槃心。",
    "T47n1997_001:0716a07_10": "師云。",
    "T47n1997_001:0716a07_11": "萬派悉歸源。",
    "T47n1997_001:0716a08_12": "進云。",
    "T47n1997_001:0716a08_13": "如何是差別智。",
    "T47n1997_001:0716a08_14": "師云。",
    "T47n1997_001:0716a08_15": "千差俱不動。",
    "T47n1997_001:0716a09_16": "進云。",
    "T47n1997_001:0716a09_17": "都來不消得去也。",
    "T47n1997_001:0716a09_18": "師云。",
    "T47n1997_001:0716a09_19": "儞放寶劍。",
    "T47n1997_001:0716a10_0": "在什麼處。",
    "T47n1997_001:0716a10_1": "僧云。",
    "T47n1997_001:0716a10_2": "高著眼。",
    "T47n1997_001:0716a10_3": "師云。",
    "T47n1997_001:0716a10_4": "話作兩橛。",
    "T47n1997_001:0716a10_5": "乃云。",
    "T47n1997_001:0716a11_6": "遠問近對。",
    "T47n1997_001:0716a11_7": "萬世如今。",
    "T47n1997_001:0716a11_8": "舉東明西。",
    "T47n1997_001:0716a11_9": "千途一轍。",
    "T47n1997_001:0716a12_10": "無事上演事。",
    "T47n1997_001:0716a12_11": "無為處作為。",
    "T47n1997_001:0716a12_12": "非色非聲青黃順逆。",
    "T47n1997_001:0716a13_13": "非心非佛賓主交參。",
    "T47n1997_001:0716a13_14": "全承此箇威光。",
    "T47n1997_001:0716a13_15": "不在別處流轉。",
    "T47n1997_001:0716a14_16": "且道。",
    "T47n1997_001:0716a14_17": "此箇是什麼。",
    "T47n1997_001:0716a14_18": "若喚作佛。",
    "T47n1997_001:0716a14_19": "頭上安頭。",
    "T47n1997_001:0716a15_20": "若喚作法。",
    "T47n1997_001:0716a15_21": "無繩自縛。",
    "T47n1997_001:0716a15_22": "祖師巴鼻是抱贓叫屈。",
    "T47n1997_001:0716a16_23": "向上機關是揚聲止響。",
    "T47n1997_001:0716a16_24": "直得總不恁麼。",
    "T47n1997_001:0716a17_25": "始較些子。",
    "T47n1997_001:0716a17_26": "且道。",
    "T47n1997_001:0716a17_27": "既總不恁麼。",
    "T47n1997_001:0716a17_28": "因什麼却較些子。",
    "T47n1997_001:0716a18_29": "莫怪從前多意氣。",
    "T47n1997_001:0716a18_30": "他家曾謁聖明君。",
    "T47n1997_001:0716a18_31": "下座。",
    "T47n1997_001:0716a20_0": "上堂云。",
    "T47n1997_001:0716a20_1": "獨掌不浪鳴。",
    "T47n1997_001:0716a20_2": "獨樹不成林。",
    "T47n1997_001:0716a20_3": "建法幢立宗旨。",
    "T47n1997_001:0716a21_4": "須是互為賓主安貼家邦。",
    "T47n1997_001:0716a21_5": "所以道。",
    "T47n1997_001:0716a21_6": "我若坐時爾須立。",
    "T47n1997_001:0716a22_7": "我若立時爾須坐。",
    "T47n1997_001:0716a22_8": "我若孤峯獨宿。",
    "T47n1997_001:0716a23_9": "爾須偃息干戈。",
    "T47n1997_001:0716a23_10": "我若天上人間。",
    "T47n1997_001:0716a23_11": "爾須三頭六臂。",
    "T47n1997_001:0716a24_12": "然後可以光揚佛日。",
    "T47n1997_001:0716a24_13": "且道。",
    "T47n1997_001:0716a24_14": "浩浩之中如何辨主。",
    "T47n1997_001:0716a25_15": "是處是慈氏。",
    "T47n1997_001:0716a25_16": "無門無善財。",
    "T47n1997_001:0716a25_17": "下座。",
    "T47n1997_001:0716a26_0": "上堂。",
    "T47n1997_001:0716a26_1": "僧問。",
    "T47n1997_001:0716a26_2": "掬沙獻佛果感輪王。",
    "T47n1997_001:0716a26_3": "法寶今開有何利益。",
    "T47n1997_001:0716a27_4": "師云。",
    "T47n1997_001:0716a27_5": "千重百匝。",
    "T47n1997_001:0716a27_6": "進云。",
    "T47n1997_001:0716a27_7": "過往生天見存獲益去也。",
    "T47n1997_001:0716a28_8": "師云。",
    "T47n1997_001:0716a28_9": "不用闍梨重註脚。",
    "T47n1997_001:0716a28_10": "問向上一路請師直指。",
    "T47n1997_001:0716a29_11": "師云。",
    "T47n1997_001:0716a29_12": "一棒打破虛空。",
    "T47n1997_001:0716a29_13": "進云。",
    "T47n1997_001:0716a29_14": "過在什麼處。",
    "T47n1997_001:0716b01_15": "師云。",
    "T47n1997_001:0716b01_16": "不識痛癢漢。",
    "T47n1997_001:0716b01_17": "進云。",
    "T47n1997_001:0716b01_18": "此猶是德山底。",
    "T47n1997_001:0716b02_19": "師云。",
    "T47n1997_001:0716b02_20": "山僧從來借路經過。",
    "T47n1997_001:0716b02_21": "乃云。",
    "T47n1997_001:0716b02_22": "眨上眉毛蹉過。",
    "T47n1997_001:0716b03_23": "大似開眼尿床。",
    "T47n1997_001:0716b03_24": "見成公案放行正是黠兒落節。",
    "T47n1997_001:0716b04_25": "恁麼不恁麼。",
    "T47n1997_001:0716b04_26": "總得曳尾靈龜。",
    "T47n1997_001:0716b04_27": "不是心不是佛不是物。",
    "T47n1997_001:0716b05_28": "虛空釘橛進得。",
    "T47n1997_001:0716b05_29": "許多閑門破戶。",
    "T47n1997_001:0716b06_30": "獨是死水藏龍。",
    "T47n1997_001:0716b06_31": "傾湫倒嶽一句作麼生道。",
    "T47n1997_001:0716b07_32": "巨靈擡手無多子。",
    "T47n1997_001:0716b07_33": "分破華山千萬重。",
    "T47n1997_001:0716b07_34": "下座。",
    "T47n1997_001:0716b09_0": "上堂云。",
    "T47n1997_001:0716b09_1": "覺即了不施功。",
    "T47n1997_001:0716b09_2": "麗天杲日印長空。",
    "T47n1997_001:0716b09_3": "淨五眼得五力。",
    "T47n1997_001:0716b10_4": "匝地清風有何極。",
    "T47n1997_001:0716b10_5": "途中受用底似虎靠山。",
    "T47n1997_001:0716b11_6": "世諦流布底如蛾投焰。",
    "T47n1997_001:0716b11_7": "且道。",
    "T47n1997_001:0716b11_8": "放行為人好。",
    "T47n1997_001:0716b12_9": "把住為人好。",
    "T47n1997_001:0716b12_10": "橫按鏌[鉺*ㄗ]全正令。",
    "T47n1997_001:0716b12_11": "太平寰宇斬癡頑。",
    "T47n1997_001:0716b13_12": "下座。",
    "T47n1997_001:0716b14_0": "上堂云。",
    "T47n1997_001:0716b14_1": "化育之本物我同途。",
    "T47n1997_001:0716b14_2": "祖佛之源古今不易。",
    "T47n1997_001:0716b15_3": "靈然獨露透聲色無遺。",
    "T47n1997_001:0716b15_4": "廓爾見前拘動寂不得。",
    "T47n1997_001:0716b16_5": "坐却意見截却語言。",
    "T47n1997_001:0716b16_6": "根塵中不隔絲毫。",
    "T47n1997_001:0716b17_7": "聲色外去來無際。",
    "T47n1997_001:0716b17_8": "恁麼透得古今生死。",
    "T47n1997_001:0716b17_9": "頭出頭沒悉皆坐斷。",
    "T47n1997_001:0716b18_10": "苟或未然。",
    "T47n1997_001:0716b18_11": "有寒暑兮促君壽。",
    "T47n1997_001:0716b19_12": "有鬼神兮妬君福。",
    "T47n1997_001:0716b19_13": "下座。",
    "T47n1997_001:0716b20_0": "上堂云。",
    "T47n1997_001:0716b20_1": "法界不容身。",
    "T47n1997_001:0716b20_2": "佛眼覷不見。",
    "T47n1997_001:0716b20_3": "聖智離言說。",
    "T47n1997_001:0716b21_4": "海口莫能宣。",
    "T47n1997_001:0716b21_5": "直截當陽已成階級。",
    "T47n1997_001:0716b21_6": "轉身吐氣轉見周遮。",
    "T47n1997_001:0716b22_7": "明明無覆藏。",
    "T47n1997_001:0716b22_8": "明明絕點翳。",
    "T47n1997_001:0716b22_9": "寬若太虛清如古鏡。",
    "T47n1997_001:0716b23_10": "若以眼見文殊橫身。",
    "T47n1997_001:0716b23_11": "若以耳聞觀音彰用。",
    "T47n1997_001:0716b24_12": "若以心知普賢當堂。",
    "T47n1997_001:0716b24_13": "且道。",
    "T47n1997_001:0716b24_14": "毘盧遮那在什麼處。",
    "T47n1997_001:0716b25_15": "眨上眉毛。",
    "T47n1997_001:0716b25_16": "下座。",
    "T47n1997_001:0716b26_0": "上堂云。",
    "T47n1997_001:0716b26_1": "一毫穿眾穴。",
    "T47n1997_001:0716b26_2": "大地沒遮欄。",
    "T47n1997_001:0716b26_3": "遍界不曾藏。",
    "T47n1997_001:0716b27_4": "古今無向背。",
    "T47n1997_001:0716b27_5": "剎剎爾塵塵爾。",
    "T47n1997_001:0716b27_6": "句句爾念念爾。",
    "T47n1997_001:0716b28_7": "還明得麼。",
    "T47n1997_001:0716b28_8": "若明得去。",
    "T47n1997_001:0716b28_9": "不費纖毫力。",
    "T47n1997_001:0716b28_10": "直入解脫門。",
    "T47n1997_001:0716b29_11": "絕承當一句作麼生道。",
    "T47n1997_001:0716b29_12": "喝一喝。",
    "T47n1997_001:0716b29_13": "下座。",
    "T47n1997_001:0716c01_0": "上堂云。",
    "T47n1997_001:0716c01_1": "機輪未轉。",
    "T47n1997_001:0716c01_2": "大地黑漫漫。",
    "T47n1997_001:0716c01_3": "古鏡當軒。",
    "T47n1997_001:0716c01_4": "沙界淨裸裸。",
    "T47n1997_001:0716c02_5": "坐却意根無動轉處。",
    "T47n1997_001:0716c02_6": "塞却咽喉無吐氣處。",
    "T47n1997_001:0716c03_7": "却是箇真實底人。",
    "T47n1997_001:0716c03_8": "提得即天上人間。",
    "T47n1997_001:0716c04_0": "撥著便氷消瓦解。",
    "T47n1997_001:0716c04_1": "正當命脈上如何點。",
    "T47n1997_001:0716c04_2": "八月秋何處熱。",
    "T47n1997_001:0716c05_3": "下座。",
    "T47n1997_001:0716c06_0": "上堂云。",
    "T47n1997_001:0716c06_1": "一即一切。",
    "T47n1997_001:0716c06_2": "實際理地。",
    "T47n1997_001:0716c06_3": "一切即一。",
    "T47n1997_001:0716c06_4": "本來無物。",
    "T47n1997_001:0716c07_5": "拈起也吒吒沙沙。",
    "T47n1997_001:0716c07_6": "放下也綿綿密密。",
    "T47n1997_001:0716c07_7": "三界長時獨露。",
    "T47n1997_001:0716c08_8": "十方無處容身。",
    "T47n1997_001:0716c08_9": "孤峯頂上倒行。",
    "T47n1997_001:0716c09_0": "十字街頭橫臥。",
    "T47n1997_001:0716c09_1": "目視雲霄則且致。",
    "T47n1997_001:0716c09_2": "魚行酒肆一句作麼生道。",
    "T47n1997_001:0716c10_3": "放憨作麼。",
    "T47n1997_001:0716c10_4": "下座。",
    "T47n1997_001:0716c11_0": "改昭覺寺為崇寧。",
    "T47n1997_001:0716c11_1": "勅黃到。",
    "T47n1997_001:0716c11_2": "開堂師拈。",
    "T47n1997_001:0716c11_3": "勅黃示眾云。",
    "T47n1997_001:0716c12_4": "匝地普天皆承恩力。",
    "T47n1997_001:0716c12_5": "九州四海悉稟威靈。",
    "T47n1997_001:0716c13_6": "百千法門中殊特法門。",
    "T47n1997_001:0716c13_7": "無量妙義中真實勝義。",
    "T47n1997_001:0716c14_8": "如今從天降下。",
    "T47n1997_001:0716c14_9": "不在眼目定動唇吻合開。",
    "T47n1997_001:0716c15_10": "驗在目前一時薦取。",
    "T47n1997_001:0716c15_11": "宣勅罷。",
    "T47n1997_001:0716c15_12": "指法座云。",
    "T47n1997_001:0716c15_13": "大眾。",
    "T47n1997_001:0716c16_14": "這一條路。",
    "T47n1997_001:0716c16_15": "千聖共知。",
    "T47n1997_001:0716c16_16": "徐行踏斷流水聲。",
    "T47n1997_001:0716c16_17": "縱觀寫出飛禽跡。",
    "T47n1997_001:0716c17_18": "且道。",
    "T47n1997_001:0716c17_19": "如何進步。",
    "T47n1997_001:0716c17_20": "要提無相毘盧印。",
    "T47n1997_001:0716c18_21": "須向千峰頂上行。",
    "T47n1997_001:0716c19_0": "陞座拈香示眾云。",
    "T47n1997_001:0716c19_1": "光吞萬象氣絕諸塵。",
    "T47n1997_001:0716c19_2": "始從撥草瞻風。",
    "T47n1997_001:0716c20_3": "以至入鄽垂手。",
    "T47n1997_001:0716c20_4": "等閑不欲全彰。",
    "T47n1997_001:0716c20_5": "切恐驚群動眾。",
    "T47n1997_001:0716c21_6": "今日拈來。",
    "T47n1997_001:0716c21_7": "奉為今上皇帝祝嚴聖壽。",
    "T47n1997_001:0716c22_8": "次拈香云。",
    "T47n1997_001:0716c22_9": "奉為判府尚書諸衙勳貴。",
    "T47n1997_001:0716c22_10": "次拈香云。",
    "T47n1997_001:0716c23_11": "十年淮甸受盡辛勤。",
    "T47n1997_001:0716c23_12": "一道清虛親蒙印可。",
    "T47n1997_001:0716c24_13": "不敢孤負。",
    "T47n1997_001:0716c24_14": "奉為五祖老師以酬法乳。",
    "T47n1997_001:0716c24_15": "正法和尚白槌。",
    "T47n1997_001:0716c25_16": "師乃云。",
    "T47n1997_001:0716c25_17": "駕千鈞弩一擊便行。",
    "T47n1997_001:0716c25_18": "射透鐵圍不容擬議。",
    "T47n1997_001:0716c26_19": "一言之下殺活全彰。",
    "T47n1997_001:0716c26_20": "寸機之中包括群象。",
    "T47n1997_001:0716c27_21": "直須當頭點破。",
    "T47n1997_001:0716c27_22": "可以千眼頓開。",
    "T47n1997_001:0716c28_23": "更若四顧躊躇。",
    "T47n1997_001:0716c28_24": "便見撈天摸地。",
    "T47n1997_001:0716c28_25": "有構得底。",
    "T47n1997_001:0716c29_0": "出眾相見。",
    "T47n1997_001:0716c29_1": "僧問。",
    "T47n1997_001:0716c29_2": "三通鼓罷。",
    "T47n1997_001:0716c29_3": "四眾臨筵。",
    "T47n1997_001:0716c29_4": "學人上來。",
    "T47n1997_001:0717a01_5": "請師說法。",
    "T47n1997_001:0717a01_6": "師云。",
    "T47n1997_001:0717a01_7": "天晴日出。",
    "T47n1997_001:0717a01_8": "進云。",
    "T47n1997_001:0717a01_9": "莫只這是。",
    "T47n1997_001:0717a02_10": "為復別有。",
    "T47n1997_001:0717a02_11": "師云。",
    "T47n1997_001:0717a02_12": "且只了一頭。",
    "T47n1997_001:0717a02_13": "進云。",
    "T47n1997_001:0717a02_14": "兩頭時如何。",
    "T47n1997_001:0717a03_15": "師云。",
    "T47n1997_001:0717a03_16": "看爾承當不得。",
    "T47n1997_001:0717a03_17": "問百華競秀妙德家風。",
    "T47n1997_001:0717a04_18": "一亘晴空普賢境界。",
    "T47n1997_001:0717a04_19": "去此二途請師指示。",
    "T47n1997_001:0717a05_20": "師云。",
    "T47n1997_001:0717a05_21": "石笋抽條長一丈。",
    "T47n1997_001:0717a05_22": "進云。",
    "T47n1997_001:0717a05_23": "莫便是和尚為人處也無。",
    "T47n1997_001:0717a06_24": "師云。",
    "T47n1997_001:0717a06_25": "這邊那裏兩頭垂。",
    "T47n1997_001:0717a06_26": "進云。",
    "T47n1997_001:0717a06_27": "請師拈出。",
    "T47n1997_001:0717a07_28": "師云。",
    "T47n1997_001:0717a07_29": "猶自不知。",
    "T47n1997_001:0717a07_30": "進云。",
    "T47n1997_001:0717a07_31": "恁麼則騎牛穿市過。",
    "T47n1997_001:0717a08_32": "師云。",
    "T47n1997_001:0717a08_33": "終是謷訛。",
    "T47n1997_001:0717a08_34": "問有一語全規矩。",
    "T47n1997_001:0717a08_35": "今日開堂有何祥瑞。",
    "T47n1997_001:0717a09_36": "師云。",
    "T47n1997_001:0717a09_37": "乾坤廓落無邊際。",
    "T47n1997_001:0717a09_38": "杲日當空宇宙明。",
    "T47n1997_001:0717a10_39": "進云。",
    "T47n1997_001:0717a10_40": "一點水墨兩處成龍去也。",
    "T47n1997_001:0717a11_0": "師云。",
    "T47n1997_001:0717a11_1": "說什麼兩處。",
    "T47n1997_001:0717a11_2": "僧問。",
    "T47n1997_001:0717a11_3": "語默涉離微。",
    "T47n1997_001:0717a11_4": "如何通不犯。",
    "T47n1997_001:0717a12_5": "師云。",
    "T47n1997_001:0717a12_6": "天知地知。",
    "T47n1997_001:0717a12_7": "進云。",
    "T47n1997_001:0717a12_8": "恁麼則驗在目前去也。",
    "T47n1997_001:0717a13_9": "師云。",
    "T47n1997_001:0717a13_10": "爾見什麼。",
    "T47n1997_001:0717a13_11": "進云。",
    "T47n1997_001:0717a13_12": "日月光天德。",
    "T47n1997_001:0717a13_13": "山河壯帝居。",
    "T47n1997_001:0717a14_14": "師云。",
    "T47n1997_001:0717a14_15": "却較些子。",
    "T47n1997_001:0717a14_16": "乃云。",
    "T47n1997_001:0717a14_17": "全機大用觸處見成。",
    "T47n1997_001:0717a15_18": "溢目清光貫通今古。",
    "T47n1997_001:0717a15_19": "一塵含法界。",
    "T47n1997_001:0717a15_20": "一念遍十方。",
    "T47n1997_001:0717a16_21": "盡大地是真實人。",
    "T47n1997_001:0717a16_22": "總剎海為大解脫。",
    "T47n1997_001:0717a17_23": "只在當人略回光相自著眼看。",
    "T47n1997_001:0717a17_24": "可以克證無生頓超方便。",
    "T47n1997_001:0717a18_25": "是故諸佛出世為一大事因緣。",
    "T47n1997_001:0717a19_26": "祖師西來亦不出見性成佛。",
    "T47n1997_001:0717a19_27": "只如今日奉皇帝勅。",
    "T47n1997_001:0717a20_28": "建大伽藍賜額度僧。",
    "T47n1997_001:0717a20_29": "祝嚴聖壽。",
    "T47n1997_001:0717a20_30": "一場佛事。",
    "T47n1997_001:0717a21_31": "耀古騰今。",
    "T47n1997_001:0717a21_32": "判府旌旆光臨。",
    "T47n1997_001:0717a21_33": "群賢車蓋畢集。",
    "T47n1997_001:0717a22_34": "四眾矚仰萬姓歌謠。",
    "T47n1997_001:0717a22_35": "為國開堂舉揚宗教。",
    "T47n1997_001:0717a23_0": "山僧不敢囊藏被蓋。",
    "T47n1997_001:0717a23_1": "其有諸佛說不盡底。",
    "T47n1997_001:0717a23_2": "祖師提不起處。",
    "T47n1997_001:0717a24_3": "對眾八字打開去也。",
    "T47n1997_001:0717a24_4": "遂舉拂子云。",
    "T47n1997_001:0717a25_5": "大眾還見麼。",
    "T47n1997_001:0717a25_6": "擊禪床云。",
    "T47n1997_001:0717a25_7": "還聞麼。",
    "T47n1997_001:0717a25_8": "見處透脫聞處精明。",
    "T47n1997_001:0717a26_9": "一念返本還源。",
    "T47n1997_001:0717a26_10": "即具頂門三眼。",
    "T47n1997_001:0717a26_11": "萬里更無纖翳。",
    "T47n1997_001:0717a27_12": "千聖齊立下風。",
    "T47n1997_001:0717a27_13": "坐斷報化佛頭。",
    "T47n1997_001:0717a28_0": "直得壁立千仞。",
    "T47n1997_001:0717a28_1": "且道。",
    "T47n1997_001:0717a28_2": "是什麼人境界。",
    "T47n1997_001:0717a28_3": "鵰弓已掛狼煙息。",
    "T47n1997_001:0717a29_4": "萬里歌謠賀太平。",
    "T47n1997_001:0717a29_5": "下座。",
    "T47n1997_001:0717b01_0": "上堂云。",
    "T47n1997_001:0717b01_1": "通身是眼見不及。",
    "T47n1997_001:0717b01_2": "通身是耳聞不徹。",
    "T47n1997_001:0717b02_0": "通身是口說不著。",
    "T47n1997_001:0717b02_1": "通身是心鑑不出。",
    "T47n1997_001:0717b02_2": "直饒盡大地明得。",
    "T47n1997_001:0717b03_3": "無絲毫透漏。",
    "T47n1997_001:0717b03_4": "猶在半途。",
    "T47n1997_001:0717b03_5": "據令全提。",
    "T47n1997_001:0717b04_0": "且道。",
    "T47n1997_001:0717b04_1": "如何展演。",
    "T47n1997_001:0717b04_2": "域中日月縱橫掛。",
    "T47n1997_001:0717b04_3": "一亘晴空萬古春。",
    "T47n1997_001:0717b05_4": "下座。",
    "T47n1997_001:0717b06_0": "上堂云。",
    "T47n1997_001:0717b06_1": "當陽有路祖佛共知。",
    "T47n1997_001:0717b06_2": "覿面相呈見聞不隔。",
    "T47n1997_001:0717b07_3": "萬象不能藏覆。",
    "T47n1997_001:0717b07_4": "千聖無以等階。",
    "T47n1997_001:0717b07_5": "活鱍鱍絕承當。",
    "T47n1997_001:0717b08_6": "淨躶躶無回互。",
    "T47n1997_001:0717b08_7": "直饒棒如雨點。",
    "T47n1997_001:0717b08_8": "喝似奔雷。",
    "T47n1997_001:0717b09_9": "猶未動著向上關捩在。",
    "T47n1997_001:0717b09_10": "如何是向上關捩。",
    "T47n1997_001:0717b10_11": "瞎却諸聖眼。",
    "T47n1997_001:0717b10_12": "瘂却山僧口。",
    "T47n1997_001:0717b10_13": "日午打三更。",
    "T47n1997_001:0717b10_14": "面南看北斗。",
    "T47n1997_001:0717b11_15": "下座。",
    "T47n1997_001:0717b12_0": "聞五祖訃。",
    "T47n1997_001:0717b12_1": "上堂云。",
    "T47n1997_001:0717b12_2": "大庾嶺頭笑却成哭。",
    "T47n1997_001:0717b12_3": "崇寧門下哭却成笑。",
    "T47n1997_001:0717b13_4": "何故。",
    "T47n1997_001:0717b13_5": "喫泉水貴地脈。",
    "T47n1997_001:0717b13_6": "且要正眼流通宗風不墜。",
    "T47n1997_001:0717b14_7": "所謂無常生死法。",
    "T47n1997_001:0717b14_8": "與我不相干。",
    "T47n1997_001:0717b15_9": "若能如是見。",
    "T47n1997_001:0717b15_10": "不用哭蒼天。",
    "T47n1997_001:0717b15_11": "既不用哭蒼天。",
    "T47n1997_001:0717b16_12": "如何通信。",
    "T47n1997_001:0717b16_13": "請大眾拈香。",
    "T47n1997_001:0717b16_14": "兩彩一賽。",
    "T47n1997_001:0717b16_15": "下座。",
    "T47n1997_001:0717b17_0": "上堂云。",
    "T47n1997_001:0717b17_1": "般若流運四象遷移。",
    "T47n1997_001:0717b17_2": "正眼密弘一陽來復。",
    "T47n1997_001:0717b18_3": "昆蟲動植悉稟此恩。",
    "T47n1997_001:0717b18_4": "履地奉天咸知慶賀。",
    "T47n1997_001:0717b19_5": "且道。",
    "T47n1997_001:0717b19_6": "無陰陽地上。",
    "T47n1997_001:0717b19_7": "還有這箇消息也無。",
    "T47n1997_001:0717b19_8": "日南長至晷運推移。",
    "T47n1997_001:0717b20_9": "錯。",
    "T47n1997_001:0717b20_10": "下座。",
    "T47n1997_001:0717b21_0": "上堂云。",
    "T47n1997_001:0717b21_1": "大人具大見。",
    "T47n1997_001:0717b21_2": "大智得大用。",
    "T47n1997_001:0717b21_3": "胸中懷六合。",
    "T47n1997_001:0717b22_4": "袖裏掛金鎚。",
    "T47n1997_001:0717b22_5": "高提祖印據寰中。",
    "T47n1997_001:0717b22_6": "萬里孤光長溢目。",
    "T47n1997_001:0717b23_7": "直得清風匝地雨灑長空。",
    "T47n1997_001:0717b23_8": "截斷兩頭歸家穩坐。",
    "T47n1997_001:0717b24_9": "所以道。",
    "T47n1997_001:0717b24_10": "映眼時若千日。",
    "T47n1997_001:0717b24_11": "萬象不能逃影質。",
    "T47n1997_001:0717b25_12": "凡夫只是未曾觀。",
    "T47n1997_001:0717b25_13": "何得自輕而退屈。",
    "T47n1997_001:0717b26_0": "只如盡華藏世界海。",
    "T47n1997_001:0717b26_1": "窮虛空邊際。",
    "T47n1997_001:0717b26_2": "都盧是箇金剛眼。",
    "T47n1997_001:0717b27_3": "且作麼生觀。",
    "T47n1997_001:0717b27_4": "揉石渡頭風浪靜。",
    "T47n1997_001:0717b27_5": "三三兩兩釣魚船。",
    "T47n1997_001:0717b28_6": "下座。",
    "T47n1997_001:0717b29_0": "上堂。",
    "T47n1997_001:0717b29_1": "僧問。",
    "T47n1997_001:0717b29_2": "一大藏教那箇是頭。",
    "T47n1997_001:0717b29_3": "師云。",
    "T47n1997_001:0717b29_4": "如是我聞。",
    "T47n1997_001:0717c01_5": "進云。",
    "T47n1997_001:0717c01_6": "此是阿難底。",
    "T47n1997_001:0717c01_7": "如何是和尚底。",
    "T47n1997_001:0717c01_8": "師云。",
    "T47n1997_001:0717c02_0": "山僧用得甚快。",
    "T47n1997_001:0717c02_1": "乃云。",
    "T47n1997_001:0717c02_2": "一言道合隨處皆真。",
    "T47n1997_001:0717c02_3": "一句無私全彰寶印。",
    "T47n1997_001:0717c03_4": "問得也善不問甚奇。",
    "T47n1997_001:0717c03_5": "烜赫光明本無向背。",
    "T47n1997_001:0717c04_6": "所以道。",
    "T47n1997_001:0717c04_7": "無邊剎海。",
    "T47n1997_001:0717c04_8": "自他不隔於毫端。",
    "T47n1997_001:0717c05_9": "十世古今。",
    "T47n1997_001:0717c05_10": "始終不移於當念。",
    "T47n1997_001:0717c05_11": "不隔處總十方為真境。",
    "T47n1997_001:0717c06_12": "不移處貫十世於目前。",
    "T47n1997_001:0717c06_13": "淨躶躶脫塵情。",
    "T47n1997_001:0717c07_14": "赤灑灑無蓋覆。",
    "T47n1997_001:0717c07_15": "直得千聖同躔萬機頓赴。",
    "T47n1997_001:0717c08_16": "還會麼。",
    "T47n1997_001:0717c08_17": "竿頭絲線從君弄。",
    "T47n1997_001:0717c08_18": "不犯清波意自殊。",
    "T47n1997_001:0717c09_19": "下座。",
    "T47n1997_001:0717c10_0": "上堂。",
    "T47n1997_001:0717c10_1": "僧問。",
    "T47n1997_001:0717c10_2": "如何是教外別傳一句。",
    "T47n1997_001:0717c10_3": "師云。",
    "T47n1997_001:0717c10_4": "問取燈籠。",
    "T47n1997_001:0717c11_5": "進云。",
    "T47n1997_001:0717c11_6": "謝師答話。",
    "T47n1997_001:0717c11_7": "師云。",
    "T47n1997_001:0717c11_8": "自領出去。",
    "T47n1997_001:0717c11_9": "進云。",
    "T47n1997_001:0717c12_0": "却是禪外別傳也。",
    "T47n1997_001:0717c12_1": "師云。",
    "T47n1997_001:0717c12_2": "三千里外過崖州。",
    "T47n1997_001:0717c12_3": "問學人不恁麼時如何。",
    "T47n1997_001:0717c13_4": "師云。",
    "T47n1997_001:0717c13_5": "莫亂統。",
    "T47n1997_001:0717c13_6": "進云。",
    "T47n1997_001:0717c13_7": "趙州庭前柏。",
    "T47n1997_001:0717c14_8": "崇寧庭前楠。",
    "T47n1997_001:0717c14_9": "是同是別。",
    "T47n1997_001:0717c14_10": "師云。",
    "T47n1997_001:0717c14_11": "莫眼華。",
    "T47n1997_001:0717c15_12": "進云。",
    "T47n1997_001:0717c15_13": "一種沒絃琴。",
    "T47n1997_001:0717c15_14": "惟師彈得妙。",
    "T47n1997_001:0717c15_15": "師云。",
    "T47n1997_001:0717c15_16": "山僧亦不承當。",
    "T47n1997_001:0717c16_17": "乃云。",
    "T47n1997_001:0717c16_18": "在天成象在地成形。",
    "T47n1997_001:0717c16_19": "日月為照臨。",
    "T47n1997_001:0717c17_20": "四時作寒暑。",
    "T47n1997_001:0717c17_21": "居谷盈谷處坑滿坑。",
    "T47n1997_001:0717c17_22": "有情則動轉施為。",
    "T47n1997_001:0717c18_23": "無情則森羅顯煥。",
    "T47n1997_001:0717c18_24": "如今在山僧拄杖頭上。",
    "T47n1997_001:0717c19_25": "指山山崩。",
    "T47n1997_001:0717c19_26": "指海海竭。",
    "T47n1997_001:0717c19_27": "點鐵成金。",
    "T47n1997_001:0717c20_0": "點金成鐵。",
    "T47n1997_001:0717c20_1": "攪長河為酥酪。",
    "T47n1997_001:0717c20_2": "化酥酪為長河。",
    "T47n1997_001:0717c20_3": "見諸人不會。",
    "T47n1997_001:0717c21_4": "變作無邊身菩薩。",
    "T47n1997_001:0717c21_5": "十方六趣悉皆普現去也。",
    "T47n1997_001:0717c22_6": "還見麼。",
    "T47n1997_001:0717c22_7": "鴛鴦綉出從君看。",
    "T47n1997_001:0717c22_8": "不把金針度與人。",
    "T47n1997_001:0717c23_9": "以拄杖擊禪床。",
    "T47n1997_001:0717c23_10": "下座。",
    "T47n1997_001:0717c24_0": "上堂。",
    "T47n1997_001:0717c24_1": "僧問。",
    "T47n1997_001:0717c24_2": "如何是正主。",
    "T47n1997_001:0717c24_3": "師云。",
    "T47n1997_001:0717c24_4": "萬派皆歸海。",
    "T47n1997_001:0717c25_0": "千山必仰宗。",
    "T47n1997_001:0717c25_1": "進云。",
    "T47n1997_001:0717c25_2": "見成公案去也。",
    "T47n1997_001:0717c25_3": "師云。",
    "T47n1997_001:0717c25_4": "脚下黑如漆。",
    "T47n1997_001:0717c26_5": "進云。",
    "T47n1997_001:0717c26_6": "莫謾學人好。",
    "T47n1997_001:0717c26_7": "師云。",
    "T47n1997_001:0717c26_8": "具行脚眼未。",
    "T47n1997_001:0717c27_9": "僧云。",
    "T47n1997_001:0717c27_10": "和尚道什麼。",
    "T47n1997_001:0717c27_11": "師云。",
    "T47n1997_001:0717c27_12": "墮坑落塹。",
    "T47n1997_001:0717c27_13": "乃云。",
    "T47n1997_001:0717c28_0": "智光洞照十方。",
    "T47n1997_001:0717c28_1": "萬有全歸一念。",
    "T47n1997_001:0717c28_2": "寬闊非外。",
    "T47n1997_001:0717c28_3": "寂寥非內。",
    "T47n1997_001:0717c29_4": "鬧市裏天子。",
    "T47n1997_001:0717c29_5": "百草頭老僧。",
    "T47n1997_001:0717c29_6": "物物頭頭全身。",
    "T47n1997_001:0718a01_7": "塵塵剎剎大用。",
    "T47n1997_001:0718a01_8": "不落己見外緣一句。",
    "T47n1997_001:0718a01_9": "作麼生道。",
    "T47n1997_001:0718a02_10": "禹力不到處。",
    "T47n1997_001:0718a02_11": "河聲流向西。",
    "T47n1997_001:0718a02_12": "下座。",
    "T47n1997_001:0718a03_0": "上堂。",
    "T47n1997_001:0718a03_1": "僧問。",
    "T47n1997_001:0718a03_2": "入門一句作麼生道。",
    "T47n1997_001:0718a03_3": "師云。",
    "T47n1997_001:0718a03_4": "引得一箇上鉤來。",
    "T47n1997_001:0718a04_5": "進云。",
    "T47n1997_001:0718a04_6": "爭奈吞却萬象。",
    "T47n1997_001:0718a04_7": "師云。",
    "T47n1997_001:0718a04_8": "無孔鐵槌。",
    "T47n1997_001:0718a05_9": "進云。",
    "T47n1997_001:0718a05_10": "學人今日失利。",
    "T47n1997_001:0718a05_11": "師云。",
    "T47n1997_001:0718a05_12": "三點兩點愁殺人。",
    "T47n1997_001:0718a06_13": "乃云。",
    "T47n1997_001:0718a06_14": "覿面見得在聖猶虧。",
    "T47n1997_001:0718a06_15": "纔涉關津白雲萬里。",
    "T47n1997_001:0718a07_16": "諦實處不思議。",
    "T47n1997_001:0718a07_17": "綿密處同真際。",
    "T47n1997_001:0718a07_18": "把斷世界無絲毫透漏。",
    "T47n1997_001:0718a08_19": "脫灑一句作麼生道。",
    "T47n1997_001:0718a08_20": "萬仞峯頭獨足行。",
    "T47n1997_001:0718a09_21": "下座。",
    "T47n1997_001:0718a10_0": "上堂。",
    "T47n1997_001:0718a10_1": "孤逈峭巍巍。",
    "T47n1997_001:0718a10_2": "始終活鱍鱍。",
    "T47n1997_001:0718a10_3": "喚作禪道祖佛。",
    "T47n1997_001:0718a11_4": "眼中著屑。",
    "T47n1997_001:0718a11_5": "不喚作禪道祖佛。",
    "T47n1997_001:0718a11_6": "掘地覓天。",
    "T47n1997_001:0718a11_7": "還有得入者麼。",
    "T47n1997_001:0718a12_8": "從他千古萬古黑漫漫。",
    "T47n1997_001:0718a12_9": "填溝塞壑無人會。",
    "T47n1997_001:0718a13_10": "下座。",
    "T47n1997_001:0718a14_0": "上堂云。",
    "T47n1997_001:0718a14_1": "點即不到。",
    "T47n1997_001:0718a14_2": "一大藏教錦上鋪華。",
    "T47n1997_001:0718a14_3": "到即不點。",
    "T47n1997_001:0718a15_4": "祖師西來金聲玉振。",
    "T47n1997_001:0718a15_5": "且道。",
    "T47n1997_001:0718a15_6": "祖意教意是同是別。",
    "T47n1997_001:0718a16_7": "碧潭雲外不相關。",
    "T47n1997_001:0718a16_8": "下座。",
    "T47n1997_001:0718a17_0": "上堂云。",
    "T47n1997_001:0718a17_1": "三轉法輪於大千。",
    "T47n1997_001:0718a17_2": "其輪本來常清淨。",
    "T47n1997_001:0718a18_0": "一切諸佛皆恁麼轉。",
    "T47n1997_001:0718a18_1": "若向下去。",
    "T47n1997_001:0718a18_2": "三乘五性頓漸偏圓。",
    "T47n1997_001:0718a19_3": "若向上去。",
    "T47n1997_001:0718a19_4": "不唯覓下口處不得。",
    "T47n1997_001:0718a19_5": "臨濟德山目瞪口呿。",
    "T47n1997_001:0718a20_6": "且道。",
    "T47n1997_001:0718a20_7": "不落上下又作麼生。",
    "T47n1997_001:0718a20_8": "誰是出頭人。",
    "T47n1997_001:0718a21_9": "下座。",
    "T47n1997_001:0718a22_0": "上堂云。",
    "T47n1997_001:0718a22_1": "僧云。",
    "T47n1997_001:0718a22_2": "直待金星現。",
    "T47n1997_001:0718a22_3": "燒然始到頭。",
    "T47n1997_001:0718a22_4": "學人金星在手時如何。",
    "T47n1997_001:0718a23_5": "師云點。",
    "T47n1997_001:0718a23_6": "進云。",
    "T47n1997_001:0718a23_7": "恁麼則不到頭也。",
    "T47n1997_001:0718a24_8": "師云。",
    "T47n1997_001:0718a24_9": "亂走衲僧。",
    "T47n1997_001:0718a24_10": "進云。",
    "T47n1997_001:0718a24_11": "爭奈金星河。",
    "T47n1997_001:0718a24_12": "師云。",
    "T47n1997_001:0718a25_13": "蹉過了也。",
    "T47n1997_001:0718a25_14": "僧問。",
    "T47n1997_001:0718a25_15": "祖師也恁麼道。",
    "T47n1997_001:0718a25_16": "天下老和尚也恁麼道。",
    "T47n1997_001:0718a26_17": "未審崇寧作麼生道。",
    "T47n1997_001:0718a26_18": "師云。",
    "T47n1997_001:0718a26_19": "山僧不恁麼道。",
    "T47n1997_001:0718a27_20": "進云。",
    "T47n1997_001:0718a27_21": "撞著磕著去也。",
    "T47n1997_001:0718a27_22": "師云。",
    "T47n1997_001:0718a27_23": "撞著箇什麼。",
    "T47n1997_001:0718a28_24": "進云。",
    "T47n1997_001:0718a28_25": "禪客相逢只彈指。",
    "T47n1997_001:0718a28_26": "師云。",
    "T47n1997_001:0718a28_27": "兩頭三面。",
    "T47n1997_001:0718a29_28": "進云。",
    "T47n1997_001:0718a29_29": "殺活臨時。",
    "T47n1997_001:0718a29_30": "師云。",
    "T47n1997_001:0718a29_31": "脚頭脚底。",
    "T47n1997_001:0718a29_32": "師云。",
    "T47n1997_001:0718a29_33": "入荒田不揀。",
    "T47n1997_001:0718b01_34": "三千里外黑漫漫。",
    "T47n1997_001:0718b01_35": "牛頭沒馬頭回。",
    "T47n1997_001:0718b02_0": "百億萬劫沒交涉。",
    "T47n1997_001:0718b02_1": "拈一放一節外生枝。",
    "T47n1997_001:0718b02_2": "舉古舉今無風起浪。",
    "T47n1997_001:0718b03_3": "山僧今日一時坐斷。",
    "T47n1997_001:0718b03_4": "且道。",
    "T47n1997_001:0718b03_5": "還有為人處也無。",
    "T47n1997_001:0718b04_6": "千峯勢到嶽邊止。",
    "T47n1997_001:0718b04_7": "萬派聲歸海上消。",
    "T47n1997_001:0718b05_8": "下座。",
    "T47n1997_001:0718b05_9": "◎圓悟佛果禪師語錄卷第一"
}