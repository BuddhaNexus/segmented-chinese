[
    {
        "source_sentence": "五字陀羅尼頌",
        "from": "T20n1174_001:0713b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T20n1174_001:0713b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空諡大鑒",
        "from": "T20n1174_001:0713b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千瑜伽中　　金剛大師說",
        "from": "T20n1174_001:0713b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖曼殊童子　　五字祕密法",
        "from": "T20n1174_001:0713b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修此三昧者　　疾入諸佛慧",
        "from": "T20n1174_001:0713b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以凡夫身　　見成就佛身",
        "from": "T20n1174_001:0713b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法最祕密　　大師口傳授",
        "from": "T20n1174_001:0713b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應被精進鎧　　依法不依人",
        "from": "T20n1174_001:0713b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來法無二　　淨信者所得",
        "from": "T20n1174_001:0713b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如普注雨　　沃土先滋長",
        "from": "T20n1174_001:0713b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊所密教　　智者宜修習",
        "from": "T20n1174_001:0713b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生性狹劣　　迷入三有苦",
        "from": "T20n1174_001:0713c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖聞勝上法　　不生勇進意",
        "from": "T20n1174_001:0713c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者生悲愍　　為此求先覺",
        "from": "T20n1174_001:0713c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如近寶山　　智人往採掇",
        "from": "T20n1174_001:0713c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚者知不往　　長日受眾苦",
        "from": "T20n1174_001:0713c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聞此法　　即知最勝路",
        "from": "T20n1174_001:0713c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於大願者　　如是人堪學",
        "from": "T20n1174_001:0713c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聞此法　　悚慄深悲喜",
        "from": "T20n1174_001:0713c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涕泣身毛竪　　如是人堪學",
        "from": "T20n1174_001:0713c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聞此法　　一心即不亂",
        "from": "T20n1174_001:0713c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根淨適悅　　如是人堪學",
        "from": "T20n1174_001:0713c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聞此法　　隨得禪悅味",
        "from": "T20n1174_001:0713c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即不樂世樂　　如是人堪學",
        "from": "T20n1174_001:0713c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聞此法　　不待時與日",
        "from": "T20n1174_001:0713c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求具足法　　唯以心直進",
        "from": "T20n1174_001:0713c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不於諸供具　　作求不得苦",
        "from": "T20n1174_001:0713c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知法供養　　如是人堪學",
        "from": "T20n1174_001:0713c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦習真言時　　如味天甘露",
        "from": "T20n1174_001:0713c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心必願聞　　如是人堪學",
        "from": "T20n1174_001:0713c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手結祕印　　作大慇重想",
        "from": "T20n1174_001:0713c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如捧須彌　　如是人堪學",
        "from": "T20n1174_001:0713c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法諸佛為　　最上乘者說",
        "from": "T20n1174_001:0713c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根性下劣者　　疑惑不能信",
        "from": "T20n1174_001:0713c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生性淨故　　諸佛本誓力",
        "from": "T20n1174_001:0713c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以相應法印　　現成諸聖身",
        "from": "T20n1174_001:0713c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於一坐中　　便成最正覺",
        "from": "T20n1174_001:0713c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若隨此法者　　應作如是信",
        "from": "T20n1174_001:0713c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或起於一念　　言我是凡夫",
        "from": "T20n1174_001:0713c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同謗三世佛　　法中結重罪",
        "from": "T20n1174_001:0713c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未受灌頂位　　及非同事者",
        "from": "T20n1174_001:0714a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應妄稱說　　如護髻中珠",
        "from": "T20n1174_001:0714a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經說處所　　或於阿練若",
        "from": "T20n1174_001:0714a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河池及海岸　　清淨名山峯",
        "from": "T20n1174_001:0714a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得道轉法輪　　仙人成就處",
        "from": "T20n1174_001:0714a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擇地起精舍　　隨順於境界",
        "from": "T20n1174_001:0714a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗地淨平好　　布散諸時花",
        "from": "T20n1174_001:0714a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "助法諸律儀　　如諸部所說",
        "from": "T20n1174_001:0714a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨澡浴體　　襲上妙衣服",
        "from": "T20n1174_001:0714a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香使嚴好　　趣於精舍門",
        "from": "T20n1174_001:0714a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先想己身形　　作金剛薩埵",
        "from": "T20n1174_001:0714a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持金剛　　右執光明磬",
        "from": "T20n1174_001:0714a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門戶稱吽字　　怒目除不祥",
        "from": "T20n1174_001:0714a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即五體投地　　敬禮世尊足",
        "from": "T20n1174_001:0714a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心以歸命　　作佛常住想",
        "from": "T20n1174_001:0714a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次雙膝長跪　　發露諸過咎",
        "from": "T20n1174_001:0714a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此清淨句　　懇誠為懺悔",
        "from": "T20n1174_001:0714a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當默誦一遍　　口稱阿字句",
        "from": "T20n1174_001:0714a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量所積罪　　清淨無有餘",
        "from": "T20n1174_001:0714a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以虔請心　　結金剛起印",
        "from": "T20n1174_001:0714a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默誦此密語　　召集十方佛",
        "from": "T20n1174_001:0714a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手金剛拳　　相鉤檀慧度",
        "from": "T20n1174_001:0714a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力峯相合　　當心仰三招",
        "from": "T20n1174_001:0714a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即知諸如來　　悉從三昧起",
        "from": "T20n1174_001:0714a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應觀虛空中　　諸佛及聖眾",
        "from": "T20n1174_001:0714a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充滿法界海　　間無有空缺",
        "from": "T20n1174_001:0714a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉以誓願力　　咸來降道場",
        "from": "T20n1174_001:0714b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結持金剛印　　想禮諸佛足",
        "from": "T20n1174_001:0714b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽各相背　　檀慧禪智鉤",
        "from": "T20n1174_001:0714b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想禮諸如來　　長跪頂上散",
        "from": "T20n1174_001:0714b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐法有四種　　隨事次應作",
        "from": "T20n1174_001:0714b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端身定支節　　趺坐淨月輪",
        "from": "T20n1174_001:0714b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則以麼吒字　　二目為日月",
        "from": "T20n1174_001:0714b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒放金剛焰　　瞻視諸如來",
        "from": "T20n1174_001:0714b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次迴顧諸方　　燒除作障者",
        "from": "T20n1174_001:0714b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心舌及二羽　　吽字騰金光",
        "from": "T20n1174_001:0714b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如諸如來　　說法之妙相",
        "from": "T20n1174_001:0714b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次對十方佛　　結大誓願印",
        "from": "T20n1174_001:0714b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十度金剛縛　　雙建忍願峯",
        "from": "T20n1174_001:0714b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示佛及諸聖　　祈憶昔所願",
        "from": "T20n1174_001:0714b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結歡喜印　　獻此三昧悅",
        "from": "T20n1174_001:0714b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十度外相叉　　忍願中交合",
        "from": "T20n1174_001:0714b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧與禪智　　各相合而竪",
        "from": "T20n1174_001:0714b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀於二乳上　　右怛囉左吒",
        "from": "T20n1174_001:0714b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如宮室戶扇　　誦此祕言句",
        "from": "T20n1174_001:0714b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以金剛嚩　　三掣撥令啟",
        "from": "T20n1174_001:0714b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀前八葉蓮　　阿字素光色",
        "from": "T20n1174_001:0714b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛縛　　禪智入於中",
        "from": "T20n1174_001:0714b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此祕密言　　字流入於殿",
        "from": "T20n1174_001:0714b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前入字印　　進力度屈拄",
        "from": "T20n1174_001:0714b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此闔心門　　智字獲堅固",
        "from": "T20n1174_001:0714c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結降三世　　住忿怒三昧",
        "from": "T20n1174_001:0714c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲作此法者　　先住大悲心",
        "from": "T20n1174_001:0714c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛拳　　檀慧反相鉤",
        "from": "T20n1174_001:0714c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力度竪開　　住於叱唱相",
        "from": "T20n1174_001:0714c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顰眉笑而怒　　四吽如雷音",
        "from": "T20n1174_001:0714c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀密迹等眾　　受教而侍立",
        "from": "T20n1174_001:0714c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左旋成辟除　　右旋成結界",
        "from": "T20n1174_001:0714c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結三昧印　　行者住三昧",
        "from": "T20n1174_001:0714c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽外相叉　　仰於跏坐上",
        "from": "T20n1174_001:0714c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐合口齒　　數息令心定",
        "from": "T20n1174_001:0714c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先所請如來　　遍滿空界者",
        "from": "T20n1174_001:0714c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指警覺我　　令觀阿字門",
        "from": "T20n1174_001:0714c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默誦此密語　　受教而侍立",
        "from": "T20n1174_001:0714c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當默誦一遍　　便想為月輪",
        "from": "T20n1174_001:0714c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倍欲清淨故　　誦此祕密言",
        "from": "T20n1174_001:0714c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清淨月輪　　觀種子淡字",
        "from": "T20n1174_001:0714c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以成金剛劍　　誦此祕密語",
        "from": "T20n1174_001:0714c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清淨月輪　　銳利至光徹",
        "from": "T20n1174_001:0714c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應漸周遍　　引量同虛空",
        "from": "T20n1174_001:0714c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不見己身　　及與一切相",
        "from": "T20n1174_001:0714c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應漸觀劍　　誦此收攝言",
        "from": "T20n1174_001:0715a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空諸如來　　悉隨劍而歛",
        "from": "T20n1174_001:0715a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量同己身已　　便成本聖形",
        "from": "T20n1174_001:0715a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身色如紫金　　作妙童子相",
        "from": "T20n1174_001:0715a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五髻被首飾　　冠寶五方冠",
        "from": "T20n1174_001:0715a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右持金剛劍　　上發火焰色",
        "from": "T20n1174_001:0715a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持青蓮　　有般若梵夾",
        "from": "T20n1174_001:0715a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住諸妙色相　　身處淨月輪",
        "from": "T20n1174_001:0715a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者住此已　　應作是思惟",
        "from": "T20n1174_001:0715a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今堅固住　　金剛劍之身",
        "from": "T20n1174_001:0715a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧耶之身　　摩訶三昧耶",
        "from": "T20n1174_001:0715a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世諸如來　　現成等正覺",
        "from": "T20n1174_001:0715a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我住此三昧　　為金剛劍身",
        "from": "T20n1174_001:0715a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是思惟己　　同於誦密語",
        "from": "T20n1174_001:0715a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應結本聖印　　加持三昧形",
        "from": "T20n1174_001:0715a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽外相叉　　忍願俱申直",
        "from": "T20n1174_001:0715a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二度上節　　猶如劍峯狀",
        "from": "T20n1174_001:0715a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心額喉與頂　　各誦此一遍",
        "from": "T20n1174_001:0715a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又結五髻印　　令具足諸相",
        "from": "T20n1174_001:0715a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒慧及檀方　　進禪力智度",
        "from": "T20n1174_001:0715a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願等皆合　　印狀如五峯",
        "from": "T20n1174_001:0715a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印心兩肩喉　　最後置頂上",
        "from": "T20n1174_001:0715a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名五髻印　　誦此本真言",
        "from": "T20n1174_001:0715a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結灌頂印　　雙手合其掌",
        "from": "T20n1174_001:0715b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智入於中　　進力摩尼狀",
        "from": "T20n1174_001:0715b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置額誦密語　　想佛灌我頂",
        "from": "T20n1174_001:0715b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結寶鬘印　　前印解而分",
        "from": "T20n1174_001:0715b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "額前與頂後　　以印皆三繞",
        "from": "T20n1174_001:0715b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先從壇慧開　　如垂鬘帶勢",
        "from": "T20n1174_001:0715b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次被堅固甲　　二羽金剛拳",
        "from": "T20n1174_001:0715b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交舒進力度　　唵砧想指面",
        "from": "T20n1174_001:0715b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綠色光不絕　　猶如抽藕絲",
        "from": "T20n1174_001:0715b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心背臍與腰　　二膝與坐後",
        "from": "T20n1174_001:0715b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸及喉與頸　　次額及頂後",
        "from": "T20n1174_001:0715b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力皆三繞　　前從壇慧散",
        "from": "T20n1174_001:0715b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手垂天衣　　此名慈悲甲",
        "from": "T20n1174_001:0715b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次於畫像心　　觀淡字為劍",
        "from": "T20n1174_001:0715b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復成本尊體　　如前之所觀",
        "from": "T20n1174_001:0715b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以鉤印請　　二羽金剛拳",
        "from": "T20n1174_001:0715b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧反相鉤　　力竪進招屈",
        "from": "T20n1174_001:0715b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以索印入　　印相同於前",
        "from": "T20n1174_001:0715b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯以進力度　　相拄如環勢",
        "from": "T20n1174_001:0715b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以鎖印止　　二羽金剛拳",
        "from": "T20n1174_001:0715b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力如鉤鎖　　以此能止住",
        "from": "T20n1174_001:0715b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以磬印喜　　復以此前印",
        "from": "T20n1174_001:0715b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧進力度　　各各反相鉤",
        "from": "T20n1174_001:0715c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應獻遏伽　　妙器滿香水",
        "from": "T20n1174_001:0715c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并置微妙花　　捧至額以獻",
        "from": "T20n1174_001:0715c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結四內供　　遍照尊所化",
        "from": "T20n1174_001:0715c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶囉底女　　適悅獻諸聖",
        "from": "T20n1174_001:0715c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛縛　　禪智並而申",
        "from": "T20n1174_001:0715c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀妙妓女雲　　遍滿十方剎",
        "from": "T20n1174_001:0715c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以鬘印獻　　伸臂捧而前",
        "from": "T20n1174_001:0715c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀妙寶鬘雲　　遍滿虛空界",
        "from": "T20n1174_001:0715c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結歌詠印　　以此而供養",
        "from": "T20n1174_001:0715c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前印從於臍　　漸上至口散",
        "from": "T20n1174_001:0715c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想緊那羅音　　供養諸聖眾",
        "from": "T20n1174_001:0715c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以舞供養　　奉獻十方聖",
        "from": "T20n1174_001:0715c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手金剛拳　　右旋頂上散",
        "from": "T20n1174_001:0715c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想妙妓樂雲　　遍滿諸世界",
        "from": "T20n1174_001:0715c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以焚香印　　普薰諸世界",
        "from": "T20n1174_001:0715c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛縛下散　　遍法界香雲",
        "from": "T20n1174_001:0715c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以散花印　　莊嚴諸世界",
        "from": "T20n1174_001:0715c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛縛上散　　花網遍虛空",
        "from": "T20n1174_001:0715c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻智燈印　　普燎諸幽冥",
        "from": "T20n1174_001:0715c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智前相逼　　普此智慧光",
        "from": "T20n1174_001:0715c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻塗香印　　當胸塗香勢",
        "from": "T20n1174_001:0716a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以解脫香雲　　普淨眾生界",
        "from": "T20n1174_001:0716a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外供養已　　次第當順念",
        "from": "T20n1174_001:0716a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結祕根本印　　誦百字真言",
        "from": "T20n1174_001:0716a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不解根本印　　便稱已念明",
        "from": "T20n1174_001:0716a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念法有四種　　一者三摩地",
        "from": "T20n1174_001:0716a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂觀所念明　　本尊口流出",
        "from": "T20n1174_001:0716a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨光入我口　　右旋布心月",
        "from": "T20n1174_001:0716a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如以水精珠　　布於明鏡上",
        "from": "T20n1174_001:0716a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿者無生義　　囉無塵染義",
        "from": "T20n1174_001:0716a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跛無第一義　　諸法性平等",
        "from": "T20n1174_001:0716a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "者無諸行義　　娜無性相義",
        "from": "T20n1174_001:0716a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五句雖差別　　其性無有二",
        "from": "T20n1174_001:0716a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心與性合者　　不須重分別",
        "from": "T20n1174_001:0716a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛所歎無思　　無思亦不思",
        "from": "T20n1174_001:0716a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不思思思已　　乃至陀羅尼",
        "from": "T20n1174_001:0716a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是四句義　　隨順契經說",
        "from": "T20n1174_001:0716b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者言音念　　依前觀諸字",
        "from": "T20n1174_001:0716b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離高下緩急　　音勢如搖鈴",
        "from": "T20n1174_001:0716b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者金剛念　　依前入字觀",
        "from": "T20n1174_001:0716b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密合唇與齒　　小令舌微動",
        "from": "T20n1174_001:0716b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者降魔念　　以悲心為本",
        "from": "T20n1174_001:0716b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外現威怒相　　顰眉聲亦勵",
        "from": "T20n1174_001:0716b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種雖差別　　一念為無二",
        "from": "T20n1174_001:0716b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手持念珠　　菩提與蓮子",
        "from": "T20n1174_001:0716b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以蓮華印　　或住說法印",
        "from": "T20n1174_001:0716b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝午昏中夜　　四時為定准",
        "from": "T20n1174_001:0716b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法最第一　　為祕密中最",
        "from": "T20n1174_001:0716b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應不顧身命　　一心依了義",
        "from": "T20n1174_001:0716b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順理修行人　　住於禪行者",
        "from": "T20n1174_001:0716b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當觀此法　　為起三昧用",
        "from": "T20n1174_001:0716b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速獲種智故　　下劣根性人",
        "from": "T20n1174_001:0716b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡愛雜亂者　　亦勸修此法",
        "from": "T20n1174_001:0716b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為消煩惱障　　入寂靜智故",
        "from": "T20n1174_001:0716b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數限終竟已　　復獻遏伽水",
        "from": "T20n1174_001:0716b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以歡喜心　　妙音誦讚歎",
        "from": "T20n1174_001:0716b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復陳八供養　　戀慕而奉獻",
        "from": "T20n1174_001:0716b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結祕根本印　　從心頂上散",
        "from": "T20n1174_001:0716b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想尊虛空中　　復道還本宮",
        "from": "T20n1174_001:0716b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住此三昧人　　最尊無有上",
        "from": "T20n1174_001:0716b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除佛及菩薩　　無人可愛敬",
        "from": "T20n1174_001:0716b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲隨順世間　　現於禮敬者",
        "from": "T20n1174_001:0716b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀彼人首　　有佛菩薩相",
        "from": "T20n1174_001:0716b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦百字真言　　法中所祕密",
        "from": "T20n1174_001:0716b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心欲有散亂　　應當密稱誦",
        "from": "T20n1174_001:0716c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔於大師前　　口受要如是",
        "from": "T20n1174_001:0716c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚力不能述　　如海一渧水",
        "from": "T20n1174_001:0716c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐違大聖者　　悚懼懷戰慄",
        "from": "T20n1174_001:0716c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如愚下人　　手獻少甘露",
        "from": "T20n1174_001:0716c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿以輕彼故　　上藥為無効",
        "from": "T20n1174_001:0716c06_0",
        "context_with_next_sentence": true
    },
    {
