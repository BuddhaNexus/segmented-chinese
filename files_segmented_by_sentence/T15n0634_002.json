[
    {
        "source_sentence": "佛說大乘智印經卷第二",
        "from": "T15n0634_002:0477a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天三藏寶法大師賜紫沙門",
        "from": "T15n0634_002:0477a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智吉祥等奉　詔譯",
        "from": "T15n0634_002:0477a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告舍利弗：",
        "from": "T15n0634_002:0477a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸佛、如來若身、若心所獲功德難修、難證，亦難悟入。",
        "from": "T15n0634_002:0477a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T15n0634_002:0477a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗！",
        "from": "T15n0634_002:0477a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來眼觀諸色，是識不以色境而動；",
        "from": "T15n0634_002:0477a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳聽諸聲，是識不以聲境而動；",
        "from": "T15n0634_002:0477a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻嗅諸香，是識不以香境而動；",
        "from": "T15n0634_002:0477a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌甞諸味，是識不以味境而動；",
        "from": "T15n0634_002:0477a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身取諸觸，是識不以觸境而動。",
        "from": "T15n0634_002:0477a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何？",
        "from": "T15n0634_002:0477a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識智自在，不於外境妄計好醜起愛憎故。",
        "from": "T15n0634_002:0477a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來意緣諸法，勝智相應，了知所觀，無生非無生，是得最上無生；",
        "from": "T15n0634_002:0477a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜非寂靜，是得最上寂靜；",
        "from": "T15n0634_002:0477a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪定非禪定，是得最上禪定；",
        "from": "T15n0634_002:0477a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律儀非律儀，是得最上律儀；",
        "from": "T15n0634_002:0477a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戲論非戲論，是離最上戲論；",
        "from": "T15n0634_002:0477a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別非分別，是離最上分別；",
        "from": "T15n0634_002:0477a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷滅非斷滅，是得最上斷滅。",
        "from": "T15n0634_002:0477a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來凡有所說，離諸虛妄，無不真實；",
        "from": "T15n0634_002:0477a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義味充饒，止息諍論；",
        "from": "T15n0634_002:0477a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心相平等，離諸異相不平等法；",
        "from": "T15n0634_002:0477a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令聞者除去惡欲，不生邪見，離邪思惟。",
        "from": "T15n0634_002:0477a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗！",
        "from": "T15n0634_002:0477a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來若於所證，無去無來、不常不斷、非空非有、離見離聞、無大小形、無方圓相。",
        "from": "T15n0634_002:0477a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來於能證道相性圓滿，智慧光明；",
        "from": "T15n0634_002:0477a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離異相及非異相；",
        "from": "T15n0634_002:0477a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸揀擇及非揀擇；",
        "from": "T15n0634_002:0477a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體若金剛，無破壞故；",
        "from": "T15n0634_002:0477a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用如虛空，無取捨故；",
        "from": "T15n0634_002:0477a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於勝善法無所愛著；",
        "from": "T15n0634_002:0477a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於廣大行亦無怖畏；",
        "from": "T15n0634_002:0477a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心相空寂，離論聞見。",
        "from": "T15n0634_002:0477a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來於所安住邊際勝定清淨圓滿，不厭闠閙，不樂空寂；",
        "from": "T15n0634_002:0477a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切時而常遊戲；",
        "from": "T15n0634_002:0477b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於法、非法、情器差別悉能了悟；",
        "from": "T15n0634_002:0477b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不如境，定力堅固；",
        "from": "T15n0634_002:0477b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱遇惡緣不可破壞。",
        "from": "T15n0634_002:0477b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來於諸世間尊貴、富饒一切樂境，如夢如幻、如棄遺跡，不依輔相、宰官、大婆羅門而有所求，是故不為名聞利養之所繫縛。",
        "from": "T15n0634_002:0477b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來或有所聞情、非情聲，不緣此故而生差別，無差別心亦復遠離。",
        "from": "T15n0634_002:0477b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來於諸所緣決定境相不生勝解，非勝解心亦復遠離。",
        "from": "T15n0634_002:0477b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來於諸時分，不計延促、有盡、無盡、成壞、差別，非差別心亦復遠離；",
        "from": "T15n0634_002:0477b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知諸法無言、無說、離去、來今；",
        "from": "T15n0634_002:0477b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於心、心所無有相應，無不相應；",
        "from": "T15n0634_002:0477b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟計念悉皆不生；",
        "from": "T15n0634_002:0477b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有此岸，無有彼岸；",
        "from": "T15n0634_002:0477b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸情器無上、中、下；",
        "from": "T15n0634_002:0477b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深心堅固，不可破壞。",
        "from": "T15n0634_002:0477b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477b14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛、如來所有身相無所動作，離諸事業；",
        "from": "T15n0634_002:0477b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨憎、違戾、信向、親厚，以平等慈隱顯不二。",
        "from": "T15n0634_002:0477b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由昔因中離無邊障、修無邊行，於諸眾生施大悲智，真實觀察，隨其所宜，具能饒益，令諸有情應自所求歡喜滿足。",
        "from": "T15n0634_002:0477b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故於所得身相智慧，唯自證知，餘無所解；",
        "from": "T15n0634_002:0477b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自身色無有齊限，與虛空等，無有隱顯，周遍一切，勝功德力之所莊嚴，相好圓滿，無有缺減；",
        "from": "T15n0634_002:0477b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蘊處界中無在、無不在；",
        "from": "T15n0634_002:0477b22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸有情所習事業悉能棄捨，除方便智示現修作；",
        "from": "T15n0634_002:0477b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內心清淨，外色清淨。",
        "from": "T15n0634_002:0477b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0477b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所說，皆是如來若身、若心勝善功德莊嚴之相，周遍平等。",
        "from": "T15n0634_002:0477b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以汝等分別之心欲見如來勝定任持所有身相，是如來身不可得見。",
        "from": "T15n0634_002:0477b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時舍利弗重白佛言：",
        "from": "T15n0634_002:0477b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊！",
        "from": "T15n0634_002:0477b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何如來色身圓滿得名無相？",
        "from": "T15n0634_002:0477b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何智印三摩地周遍平等？",
        "from": "T15n0634_002:0477b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時世尊欲重宣此義，而說偈言：",
        "from": "T15n0634_002:0477c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來身心相，　　由定智所生，",
        "from": "T15n0634_002:0477c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不假外境牽，　　識相分別動。",
        "from": "T15n0634_002:0477c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意緣一切法，　　與身無有異，",
        "from": "T15n0634_002:0477c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離是非差別，　　所得為最上。",
        "from": "T15n0634_002:0477c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以小智力，　　欲見善逝身，",
        "from": "T15n0634_002:0477c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如月印晴空，　　妄謂水中現。",
        "from": "T15n0634_002:0477c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身相本微妙，　　復由勝定持，",
        "from": "T15n0634_002:0477c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離長短方圓，　　無去來住立。",
        "from": "T15n0634_002:0477c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內心寂不動，　　澄靜若虛空，",
        "from": "T15n0634_002:0477c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息泯身心相，　　自然無所有。",
        "from": "T15n0634_002:0477c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無所有心，　　不著香味觸，",
        "from": "T15n0634_002:0477c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸蘊處界，　　以此觀如來。",
        "from": "T15n0634_002:0477c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如見水中月，　　雖不得真實，",
        "from": "T15n0634_002:0477c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既離分別心，　　是亦名為見。",
        "from": "T15n0634_002:0477c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來智印門，　　非我獨能證，",
        "from": "T15n0634_002:0477c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若大心眾生，　　希求無厭倦，",
        "from": "T15n0634_002:0477c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得最上等持，　　依此勝定力，",
        "from": "T15n0634_002:0477c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛智印門，　　亦當無所得。",
        "from": "T15n0634_002:0477c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經所生福，　　無盡如虛空，",
        "from": "T15n0634_002:0477c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以方便智，　　少略而讚說。",
        "from": "T15n0634_002:0477c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛土，　　百千酤胝剎，",
        "from": "T15n0634_002:0477c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿中諸珍寶，　　若人持供養，",
        "from": "T15n0634_002:0477c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時經無量劫；",
        "from": "T15n0634_002:0477c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫或受持，　　是人所得福，",
        "from": "T15n0634_002:0477c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比前行施者，　　復倍河沙數。",
        "from": "T15n0634_002:0477c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人行慈心，　　饒益諸有情，",
        "from": "T15n0634_002:0477c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如依此經，　　悟佛三摩地。",
        "from": "T15n0634_002:0477c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於眾生界，　　心常行忍辱，",
        "from": "T15n0634_002:0477c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如彈指頃，　　修習殊勝定。",
        "from": "T15n0634_002:0478a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其所生功德，　　猶如須彌山，",
        "from": "T15n0634_002:0478a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將以對微塵，　　大小莫為比。",
        "from": "T15n0634_002:0478a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人行精進，　　勇猛為諸善，",
        "from": "T15n0634_002:0478a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如聞此經，　　依教悟其理。",
        "from": "T15n0634_002:0478a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲諸功德，　　百千萬億分，",
        "from": "T15n0634_002:0478a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以共較量，　　比況不及一。",
        "from": "T15n0634_002:0478a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人修禪定，　　安住無量劫，",
        "from": "T15n0634_002:0478a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐臥若經行，　　周遍諸佛剎，",
        "from": "T15n0634_002:0478a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如一時中，　　聞此經功德。",
        "from": "T15n0634_002:0478a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於塵沙劫，　　能修習智慧，",
        "from": "T15n0634_002:0478a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷除煩惱纏，　　名聞普周遍，",
        "from": "T15n0634_002:0478a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如剎那時，　　讚佛智印海，",
        "from": "T15n0634_002:0478a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如以大海水，　　比較於一滴。",
        "from": "T15n0634_002:0478a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲觀佛者，　　須離諸名相，",
        "from": "T15n0634_002:0478a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知諸法性，　　非空亦非有。",
        "from": "T15n0634_002:0478a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若但了知空，　　設如蘇部底，",
        "from": "T15n0634_002:0478a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛智印門，　　亦無所悟入。",
        "from": "T15n0634_002:0478a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時世尊說是偈已，告舍利弗：",
        "from": "T15n0634_002:0478a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如我所說如來智印三摩地法，若諸菩薩能於十方諸佛世界為欲圓滿無礙智慧，應當修學是三昧地，晝夜精進，身心安住而不散亂，亦不懈廢。",
        "from": "T15n0634_002:0478a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗！",
        "from": "T15n0634_002:0478a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是菩薩摩訶薩若欲願見十方世界諸佛國土一切如來，悉皆能見。",
        "from": "T15n0634_002:0478a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗！",
        "from": "T15n0634_002:0478a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三摩地是菩薩摩訶薩無量無邊最勝法門、甚深法眼，而於諸法得無障礙，通達了知，無所忘失，是名如來最勝總持陀羅尼門。",
        "from": "T15n0634_002:0478a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩心欲圓滿一切說相，為欲成就無上菩提微妙體性，應當志心精勤修學是三摩地智印法門。",
        "from": "T15n0634_002:0478b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩隨欲遠離諸惡業行，無諸障礙，成就最上清淨之法，以智慧力摧伏怨魔，遠離不善，諸相平等，如如來智無諸染穢，諸業障盡，清淨無垢。",
        "from": "T15n0634_002:0478b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住如來究竟智地，能使諸惡、一切魔怨咸皆止息，無所退動；",
        "from": "T15n0634_002:0478b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺智明了，知彼一切諸眾生等種種分別、愛樂境相、善不善業因果差別；",
        "from": "T15n0634_002:0478b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知一切諸眾生等意地微細、煩惱結縛，善能知彼，解諸有情一切縛法；",
        "from": "T15n0634_002:0478b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當修學如來所說方便最上勝三摩地智印法門。",
        "from": "T15n0634_002:0478b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩欲令眾生志樂堅固，心欲思惟、求無上法，應當精勤修習如是三摩地門，自然成就無上勝法。",
        "from": "T15n0634_002:0478b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩意欲宣說諸佛、如來應諸有情種種根病對治等法，應當精勤修習如是三摩地門，自然於法分別演說無有障礙。",
        "from": "T15n0634_002:0478b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩心欲於彼三乘聖法，分別曉悟真、俗諦相甚深法義，應當精勤修習如是三摩地門，自然於法智慧明了，不生闇鈍。",
        "from": "T15n0634_002:0478b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩欲於酤胝百千劫數了悟生滅、幻化、不堅，能證諸法真實自性，清淨解脫，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩欲於生滅十二因緣——無明為始，發生業行，招集苦報，貪染、執著、愛欲增盛，假有聚成生、死、病相，變易無常，流轉諸趣——於生滅因而自覺悟，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩欲了一切雜類有情，起見、造業、報相差別、心識明昧、正念顛倒、異分有情，如實了知根性利鈍，方便教示，漸令悟入真實正法，住信行地，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩意樂成就諸佛國土、清淨業因、純善境界，身心寂靜，眷屬調順，遠離嫉妬、憍慢過失，親近恭敬，平等愛樂，無怨憎想，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩意欲發萌自身智慧勝妙光明，照曜自他生死、黑暗、愚癡重障，斷三界惑，滅諸苦報，自在解脫，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩欲知十方所有世界一切有情死此生彼、壽命延促所經長劫及以剎那生滅分限，定由先業招引勢力所感如是，自類果報如實了知，前後決定壽命根本，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩欲知聲聞及辟支迦、菩薩、如來從自因地所行妙行，於四聖諦斷滅、修證，十二因緣逆順觀察，寂然自覺微妙甚深，十到彼岸清淨因行，各各獲得究竟果報，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩欲於一切語言、音聲、角論、辯捷應時詶對，不踈、不謬、方便善巧，於諸世俗及以勝義顯示明了，令人易解，不生疑惑，印證決定，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩意欲了知佛法正因，三乘善行方便隨順，根本差別有上中下，稱性悟入菩薩因地，漸以熏修，植諸善本，得如來智，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩意欲成就諸佛如來圓滿覺智，不起分別，現種種身，以平等慈任運攝受一切有情，令各生起歡喜，愛樂修學菩薩心地行願，應當精勤修習如是勝三摩地。",
        "from": "T15n0634_002:0478c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「舍利弗！",
        "from": "T15n0634_002:0478c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我所說三摩地法，是為最勝；",
        "from": "T15n0634_002:0478c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如摩尼珠，一切有情凡所樂欲，悉得如意，無不滿足。",
        "from": "T15n0634_002:0478c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗！",
        "from": "T15n0634_002:0478c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩摩訶薩等得此如來三摩地法，一切所須諸法、聖財及微妙行，悉得如意，行願圓滿。",
        "from": "T15n0634_002:0479a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故應當精勤修學。",
        "from": "T15n0634_002:0479a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時世尊欲重宣此義，而說偈言：",
        "from": "T15n0634_002:0479a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來所有智，　　最上更無等，",
        "from": "T15n0634_002:0479a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨性相差別，　　一切皆能證。",
        "from": "T15n0634_002:0479a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等智光明，　　普照諸縛著，",
        "from": "T15n0634_002:0479a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能入智慧門，　　得無量自在。",
        "from": "T15n0634_002:0479a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智相及智性，　　能印證諸法，",
        "from": "T15n0634_002:0479a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別諸善惡，　　及世俗勝義，",
        "from": "T15n0634_002:0479a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曉了如是法，　　智慧無有盡。",
        "from": "T15n0634_002:0479a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如大明日，　　光照於三界，",
        "from": "T15n0634_002:0479a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普於諸幽暗，　　一切皆破壞，",
        "from": "T15n0634_002:0479a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就平等法。",
        "from": "T15n0634_002:0479a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切三摩地，　　皆從智印出，",
        "from": "T15n0634_002:0479a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為諸佛種，　　亦名大摩尼，",
        "from": "T15n0634_002:0479a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益諸有情。",
        "from": "T15n0634_002:0479a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有最勝珍寶，　　財富無有盡，",
        "from": "T15n0634_002:0479a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濟諸貧乏者，　　皆令得充足。",
        "from": "T15n0634_002:0479a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法財施眾生，　　亦復無有盡。",
        "from": "T15n0634_002:0479a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通及智慧，　　最勝妙法門，",
        "from": "T15n0634_002:0479a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆從三摩地，　　智印寶所生。",
        "from": "T15n0634_002:0479a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如諸國土，　　有大摩尼珠，",
        "from": "T15n0634_002:0479a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸王皆愛樂，　　臣佐普護持，",
        "from": "T15n0634_002:0479a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是摩尼寶，　　諸寶無有上。",
        "from": "T15n0634_002:0479a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說智印寶，　　殊勝最第一，",
        "from": "T15n0634_002:0479a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持智光明，　　破壞於諸見，",
        "from": "T15n0634_002:0479a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境界悉明了，　　遠離諸冥暗。",
        "from": "T15n0634_002:0479a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住寂靜心，　　不分別好醜，",
        "from": "T15n0634_002:0479a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修清淨智慧，　　財法無窮盡，",
        "from": "T15n0634_002:0479a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪染無所著，　　無六十二見，",
        "from": "T15n0634_002:0479b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念悉平等，　　入甘露法門，",
        "from": "T15n0634_002:0479b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速得如來智，　　成就相好身，",
        "from": "T15n0634_002:0479b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足三十二，　　得最勝菩提。",
        "from": "T15n0634_002:0479b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等一切佛覺，　　妙智已圓明，",
        "from": "T15n0634_002:0479b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到菩提彼岸，　　證涅槃自性，",
        "from": "T15n0634_002:0479b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具自他圓滿，　　功德悉成就。",
        "from": "T15n0634_002:0479b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無邊際，　　甚深微妙法，",
        "from": "T15n0634_002:0479b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持陀羅尼，　　解脫常寂靜。",
        "from": "T15n0634_002:0479b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能具足十力，　　又以大願海，",
        "from": "T15n0634_002:0479b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施波羅蜜，　　持戒及忍辱，",
        "from": "T15n0634_002:0479b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進與禪定，　　智慧常堅固。",
        "from": "T15n0634_002:0479b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住六度中，　　長時無間斷，",
        "from": "T15n0634_002:0479b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有諸怖畏，　　離煩惱苦業，",
        "from": "T15n0634_002:0479b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔羅與眷屬，　　不能得其便。",
        "from": "T15n0634_002:0479b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能引導眾生，　　不捨於正法，",
        "from": "T15n0634_002:0479b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸入如來家，　　得遊智印門。",
        "from": "T15n0634_002:0479b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於賢劫中，　　及十方世界，",
        "from": "T15n0634_002:0479b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛會，　　親近皆隨喜。",
        "from": "T15n0634_002:0479b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名真佛子，　　無有能破壞。",
        "from": "T15n0634_002:0479b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有信解人，　　能書寫此經，",
        "from": "T15n0634_002:0479b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或讀誦受持，　　愛樂廣流布，",
        "from": "T15n0634_002:0479b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長時無懈倦，　　於義味明了；",
        "from": "T15n0634_002:0479b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知如是經，　　三世諸佛母，",
        "from": "T15n0634_002:0479b24_0",
        "context_with_next_sentence": true
    },
    {
