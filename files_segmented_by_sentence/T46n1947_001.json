[
    {
        "source_sentence": "釋迦如來涅槃禮讚文天台智者大師齋忌禮讚文同",
        "from": "T46n1947_001:0964a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初入道場普禮三拜焚香互跪首者唱云。",
        "from": "T46n1947_001:0964a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭以。能仁應世寂默證真。廓千界以居尊。撫",
        "from": "T46n1947_001:0964a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四生而為子。",
        "from": "T46n1947_001:0964a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形隨物現。",
        "from": "T46n1947_001:0964a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元同非相之身。",
        "from": "T46n1947_001:0964a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教逐機興。",
        "from": "T46n1947_001:0964a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詎異無言之道。",
        "from": "T46n1947_001:0964a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰自法輪載轉。",
        "from": "T46n1947_001:0964a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化迹彌隆。",
        "from": "T46n1947_001:0964a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "半字初談。",
        "from": "T46n1947_001:0964a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬擊蒙而靡倦。",
        "from": "T46n1947_001:0964a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百金後寄。",
        "from": "T46n1947_001:0964a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶贖命以惟勤。",
        "from": "T46n1947_001:0964a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令煩惱之儔。",
        "from": "T46n1947_001:0964a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住如來之藏。",
        "from": "T46n1947_001:0964a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四心告滿三德云歸。",
        "from": "T46n1947_001:0964a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂不令一人獨得滅度。",
        "from": "T46n1947_001:0964a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以如來滅度而滅度之。",
        "from": "T46n1947_001:0964a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故入于涅槃不可得而思議。",
        "from": "T46n1947_001:0964a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等鶴林既遠痛失於前緣。",
        "from": "T46n1947_001:0964a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像法猶存忝遵於遺訓。",
        "from": "T46n1947_001:0964a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今值中春之日。",
        "from": "T46n1947_001:0964a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緬懷北首之儀㵎藻谿蘋。",
        "from": "T46n1947_001:0964a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊展薦羞之禮。",
        "from": "T46n1947_001:0964a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巴歈俚詠。",
        "from": "T46n1947_001:0964a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少陳哀歎之誠。",
        "from": "T46n1947_001:0964a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願洪慈俯迴昭鑒至此總禮一拜晨朝必須致請。",
        "from": "T46n1947_001:0964a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘時存略。",
        "from": "T46n1947_001:0964a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請者一位三唱。",
        "from": "T46n1947_001:0964a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃教主堪忍世尊釋迦文佛。",
        "from": "T46n1947_001:0964a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃會上所說法門修多羅藏。",
        "from": "T46n1947_001:0964a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃會上所集聖賢菩薩僧眾。",
        "from": "T46n1947_001:0964a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃會上所集聖賢緣覺僧眾。",
        "from": "T46n1947_001:0964a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃會上所集聖賢聲聞僧眾。",
        "from": "T46n1947_001:0964b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　歎佛偈依經中迦葉菩薩所說歎後宣疏或隨意陳白。",
        "from": "T46n1947_001:0964b04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憐憫世間大醫王　　身及智慧俱寂靜",
        "from": "T46n1947_001:0964b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無我法中有真我　　是我頂禮無上尊",
        "from": "T46n1947_001:0964b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　向下禮讚凡唱一身至釋迦字和之禮畢起立唱讚。",
        "from": "T46n1947_001:0964b07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊現聲光集眾時身釋迦文佛。",
        "from": "T46n1947_001:0964b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉河堅樹生初日　　靈耀仙音遍十方",
        "from": "T46n1947_001:0964b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為召群生問後疑　　示言大覺歸元寂",
        "from": "T46n1947_001:0964b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世界寶嚴如樂土　　人身血現似奢華",
        "from": "T46n1947_001:0964b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天供雲臻但默然　　一時稽首懷憂惱",
        "from": "T46n1947_001:0964b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊受純陀施食時身釋迦文佛。",
        "from": "T46n1947_001:0964b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來久證遮那體　　權現臨終應供儀",
        "from": "T46n1947_001:0964b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與毛端變化身　　受茲華氏粳糧食",
        "from": "T46n1947_001:0964b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六塵雖謂空無相　　五果當知結有緣",
        "from": "T46n1947_001:0964b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今追遠奉粢盛　　願證真常同妙義",
        "from": "T46n1947_001:0964b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊臥寶床現病時身釋迦文佛。",
        "from": "T46n1947_001:0964b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付囑文殊傳正法　　俄然背疾示眾生",
        "from": "T46n1947_001:0964b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曲肱右脅類嬰兒　　收視無言如病者",
        "from": "T46n1947_001:0964b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄭重任聽迦葉問　　從容猶待世王來",
        "from": "T46n1947_001:0964b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再起流光燭大千　　滿中群苦皆消蕩",
        "from": "T46n1947_001:0964b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊入月愛三昧時身釋迦文佛。",
        "from": "T46n1947_001:0964c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲俯念阿闍世　　隨順耆婆發善心",
        "from": "T46n1947_001:0964c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麑座重舒月愛光　　袞衣頓覺身瘡愈",
        "from": "T46n1947_001:0964c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸佛始知邪道誤　　聞經方了逆緣空",
        "from": "T46n1947_001:0964c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伊蘭叢裏出栴檀　　奇哉取譬無根信",
        "from": "T46n1947_001:0964c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊示人天相好時身釋迦文佛。",
        "from": "T46n1947_001:0964c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手祛法服舒身相　　昇降虛空四六迴",
        "from": "T46n1947_001:0964c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲入泥洹寂靜門　　今觀紫磨莊嚴聚",
        "from": "T46n1947_001:0964c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麋軀曷報修因德　　塵劫難逢出世緣",
        "from": "T46n1947_001:0964c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺教殷勤囑未來　　歸依三寶皆當受",
        "from": "T46n1947_001:0964c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊觀世間寂定時身釋迦文佛。",
        "from": "T46n1947_001:0964c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應物已曾開祕藏　　還源相次近中宵",
        "from": "T46n1947_001:0964c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又放光明號涅槃　　遍遊禪定咸超越",
        "from": "T46n1947_001:0964c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種智莫非觀實相　　有情寧免見無常",
        "from": "T46n1947_001:0964c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薪盡臨當火滅時　　阿難於是心迷亂",
        "from": "T46n1947_001:0964c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊入四禪滅度時身釋迦文佛。",
        "from": "T46n1947_001:0964c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重入四禪休顧命　　便於三昧示云亡",
        "from": "T46n1947_001:0964c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙林變鶴覆金棺　　大地如雷震沙界",
        "from": "T46n1947_001:0964c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋梵累陳哀歎偈　　魔邪聊解戰爭憂",
        "from": "T46n1947_001:0964c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧日慈光罷照臨　　無明長夜何當曉",
        "from": "T46n1947_001:0964c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊入金棺白㲲時身釋迦文佛。",
        "from": "T46n1947_001:0964c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國人相問荼毘法　　天帝親傳囑累言",
        "from": "T46n1947_001:0965a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾順輪王所化儀　　令生梵眾無疆福",
        "from": "T46n1947_001:0965a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "細㲲千重周聖體　　寶棺七匝繞仙城",
        "from": "T46n1947_001:0965a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再以香泉灌沐時　　咸覩妙嚴身不壞",
        "from": "T46n1947_001:0965a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊示飲光在柩時身釋迦文佛。",
        "from": "T46n1947_001:0965a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者飲光居鷲嶺　　出禪知佛已歸真",
        "from": "T46n1947_001:0965a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙望拘尸徒步來　　正值闍維襄事日",
        "from": "T46n1947_001:0965a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柩中先現身金色　　拜次仍迴足輻輪",
        "from": "T46n1947_001:0965a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最後能隨哀慕心　　是為平等慈悲相",
        "from": "T46n1947_001:0965a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊入香樓火化時身釋迦文佛。",
        "from": "T46n1947_001:0965a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卍字胸中流聖火　　眾香樓上𤋲真軀",
        "from": "T46n1947_001:0965a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉相金姿竟不存　　霜綿素㲲還如故",
        "from": "T46n1947_001:0965a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利晶熒分國土　　塔婆高顯示人天",
        "from": "T46n1947_001:0965a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等慚生像法餘　　空讚當時遺化事",
        "from": "T46n1947_001:0965a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃會上所說法門修多羅藏。",
        "from": "T46n1947_001:0965a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始為純陀敷妙義　　終因須跋演微言",
        "from": "T46n1947_001:0965a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力扶毘奈破權疑　　能使闡提生實信",
        "from": "T46n1947_001:0965a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲用醍醐勝眾味　　浴臨渤海足群流",
        "from": "T46n1947_001:0965a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我願聞持盡後身　　圓伊滿字常修學",
        "from": "T46n1947_001:0965a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃會上所集聖賢菩薩僧集。",
        "from": "T46n1947_001:0965a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰求無上菩提道　　遍集微塵薩埵因",
        "from": "T46n1947_001:0965a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不於三界現諸心　　等視眾生如一子",
        "from": "T46n1947_001:0965a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引道大乘令發趣　　提携弱喪使知歸",
        "from": "T46n1947_001:0965a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中自在盡猶龍　　乘時利見難思議",
        "from": "T46n1947_001:0965b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃會上所集聖賢覺僧眾。",
        "from": "T46n1947_001:0965b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣罙入輪迴境　　觀照優遊解脫門",
        "from": "T46n1947_001:0965b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福智曾經累劫修　　神通能起無方用",
        "from": "T46n1947_001:0965b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已捨鹿車行直道　　不同犀角守孤峰",
        "from": "T46n1947_001:0965b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來會娑羅雙樹間　　猶如鏡像隨形現",
        "from": "T46n1947_001:0965b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃會上所集聖賢聲聞僧眾。",
        "from": "T46n1947_001:0965b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏諸根皆寂靜　　受持遺教悉流通",
        "from": "T46n1947_001:0965b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既於朽宅免焚燒　　不向春池收瓦礫",
        "from": "T46n1947_001:0965b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四果並堪為佛子　　三修俱得會經王",
        "from": "T46n1947_001:0965b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與無常畢竟同　　是謂莊嚴雙樹者",
        "from": "T46n1947_001:0965b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　禮讚已復跪秉爐如常運想披陳五悔。",
        "from": "T46n1947_001:0965b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心懺悔。",
        "from": "T46n1947_001:0965b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我及十方法界一切眾生。",
        "from": "T46n1947_001:0965b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟自心清淨之元。",
        "from": "T46n1947_001:0965b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具種智妙明之性。",
        "from": "T46n1947_001:0965b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千如未眹本絕於聖凡。",
        "from": "T46n1947_001:0965b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六妄成因遂流於生死。",
        "from": "T46n1947_001:0965b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是眉珠頓失。",
        "from": "T46n1947_001:0965b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼膜重增。",
        "from": "T46n1947_001:0965b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不逢明鏡之醫罔會金𮢋之治。",
        "from": "T46n1947_001:0965b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何緣宿植生處人倫。",
        "from": "T46n1947_001:0965b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "值釋迦法中。",
        "from": "T46n1947_001:0965b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預比丘僧數。",
        "from": "T46n1947_001:0965b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以律儀匪慎。",
        "from": "T46n1947_001:0965b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道品難成。",
        "from": "T46n1947_001:0965b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一乘了義之談。",
        "from": "T46n1947_001:0965b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未開實慧。",
        "from": "T46n1947_001:0965b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七聚防非之制。",
        "from": "T46n1947_001:0965b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多犯深諐。",
        "from": "T46n1947_001:0965b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畜不淨以資身。",
        "from": "T46n1947_001:0965b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順無明而為行。",
        "from": "T46n1947_001:0965b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮囊有缺。",
        "from": "T46n1947_001:0965b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠懷溺海之憂。",
        "from": "T46n1947_001:0965b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華屋空存。",
        "from": "T46n1947_001:0965b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧受入門之賜。",
        "from": "T46n1947_001:0965b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則眇觀泥越。",
        "from": "T46n1947_001:0965b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "躬事懺摩。",
        "from": "T46n1947_001:0965b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既發露於罪根。",
        "from": "T46n1947_001:0965b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃淨除於業障。",
        "from": "T46n1947_001:0965b25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛慈普覆法力潛通。",
        "from": "T46n1947_001:0965b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故我歸依必垂護念。",
        "from": "T46n1947_001:0965b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　懺悔已至心歸命三寶。",
        "from": "T46n1947_001:0965b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心勸請。",
        "from": "T46n1947_001:0965b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛同常寂　　各為眾生出世間",
        "from": "T46n1947_001:0965b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既成道果已降魔　　勸轉法輪當度物",
        "from": "T46n1947_001:0965c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優曇瑞蕚良難見　　師子雄音豈易聞",
        "from": "T46n1947_001:0965c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至隨機現滅時　　請以洪慈延劫壽",
        "from": "T46n1947_001:0965c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　勸請已至心歸命三寶。",
        "from": "T46n1947_001:0965c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心隨喜。",
        "from": "T46n1947_001:0965c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓通已是開方便　　五衍無非會一乘",
        "from": "T46n1947_001:0965c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去來今世有修行　　身語意業皆隨喜",
        "from": "T46n1947_001:0965c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃葉謂金因亦善　　聚沙為塔道猶成",
        "from": "T46n1947_001:0965c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切曾生嫉恚心　　故茲悔過咸稱讚",
        "from": "T46n1947_001:0965c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　隨喜已至心歸命三寶。",
        "from": "T46n1947_001:0965c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心迴向。",
        "from": "T46n1947_001:0965c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疇昔與今諸福業　　總將空慧悉融通",
        "from": "T46n1947_001:0965c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作皆成四德因　　不為再求三有果",
        "from": "T46n1947_001:0965c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶彙若非同解脫　　我心終未取菩提",
        "from": "T46n1947_001:0965c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬水唯朝大海宗　　其猶迴向無差別",
        "from": "T46n1947_001:0965c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　迴向已至心歸命三寶。",
        "from": "T46n1947_001:0965c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心發願。",
        "from": "T46n1947_001:0965c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓向此身修般若　　常觀我佛住泥洹",
        "from": "T46n1947_001:0965c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離因緣所起心　　即見空中無相體",
        "from": "T46n1947_001:0965c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若効雪山書樹石　　或於田里舉筌蹄",
        "from": "T46n1947_001:0965c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普願猶如妙吉祥　　俱時明了如來性",
        "from": "T46n1947_001:0965c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　發願已至心歸命三寶。",
        "from": "T46n1947_001:0965c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　右旋道場諷遺教經稱揚佛號盡誠而退。",
        "from": "T46n1947_001:0965c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦如來涅槃禮讚文",
        "from": "T46n1947_001:0965c24_100",
        "context_with_next_sentence": false
    }
]