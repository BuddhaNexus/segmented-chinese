[
    {
        "source_sentence": "金剛藥叉瞋怒王息災大威神驗",
        "from": "T21n1220_001:0098a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦儀軌",
        "from": "T21n1220_001:0098a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺三藏金剛智奉　詔譯",
        "from": "T21n1220_001:0098a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手虛空庫菩薩摩訶薩。",
        "from": "T21n1220_001:0098a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察天宮諸大菩薩天龍等八部。",
        "from": "T21n1220_001:0098a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而從座起偏袒右肩。",
        "from": "T21n1220_001:0098a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白釋迦牟尼佛言。",
        "from": "T21n1220_001:0098a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃往古昔無量俱胝大劫。",
        "from": "T21n1220_001:0098a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求法故。",
        "from": "T21n1220_001:0098a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流轉器世間。",
        "from": "T21n1220_001:0098a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多有波旬王等令我多退佛法。",
        "from": "T21n1220_001:0098a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願薄伽梵。",
        "from": "T21n1220_001:0098a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽示現權身說大威神驗真言。",
        "from": "T21n1220_001:0098a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言欲現何權身。",
        "from": "T21n1220_001:0098a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰願現大聖藥叉金剛形。",
        "from": "T21n1220_001:0098a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去佛已現。",
        "from": "T21n1220_001:0098a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在佛今現。",
        "from": "T21n1220_001:0098a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來佛當現。",
        "from": "T21n1220_001:0098a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今非過去非現在非未來。",
        "from": "T21n1220_001:0098a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現我自心三昧忿怒。",
        "from": "T21n1220_001:0098a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而守護佛法愍念有情。",
        "from": "T21n1220_001:0098a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉大聖欲護持佛法愍念有情。",
        "from": "T21n1220_001:0098a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者善可現權說大靈驗真言。",
        "from": "T21n1220_001:0098a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我與仁加持護念。",
        "from": "T21n1220_001:0098a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱共說真言慈護持者。",
        "from": "T21n1220_001:0098a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時未起座。",
        "from": "T21n1220_001:0098a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現三面六臂大威忿怒為毒形。",
        "from": "T21n1220_001:0098a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以七珍瓔珞莊身。",
        "from": "T21n1220_001:0098a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身長大無量遍身火焰燃。",
        "from": "T21n1220_001:0098a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如劫焰烟威猛。",
        "from": "T21n1220_001:0098a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顧視四方如獸王象勇猛。",
        "from": "T21n1220_001:0098a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言先持行者。",
        "from": "T21n1220_001:0098a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧止羽為鈴拳當乳上。",
        "from": "T21n1220_001:0098a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以觀羽作劍縛置膝上。",
        "from": "T21n1220_001:0098a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以止羽共第一噁字反拳縮引。",
        "from": "T21n1220_001:0098a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共第二鑁噁返觀羽。",
        "from": "T21n1220_001:0098a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羽即二手如鳳威粕米勢。",
        "from": "T21n1220_001:0098a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共第三噁下止上觀拍節出聲。",
        "from": "T21n1220_001:0098b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共第四感引二羽磨轉。",
        "from": "T21n1220_001:0098b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共五發吒互止觀上下三返以拳纏身。",
        "from": "T21n1220_001:0098b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置頂左三轉成辟除。",
        "from": "T21n1220_001:0098b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右三轉成結界。",
        "from": "T21n1220_001:0098b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後以印各押四合。",
        "from": "T21n1220_001:0098b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋目怒口。",
        "from": "T21n1220_001:0098b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚怖畏體誦明真言曰。",
        "from": "T21n1220_001:0098b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱南引一阿󰂛迦引也二尾曩引也三噁入四毘只迦引也縛日羅菴平引五設咄嚧二合鑁噁引六達磨薩嚩引吒迦爾若以反尾伽哩嚀引尾伽哩嚀引七設咄嚧二合吽引平噁入八訖哩二合訖哩二合九伽𩕳八伽𩕳入引九伽伽𩕳引十感入十一嗚祖主於反摩羅𩕳引設咄嚧吽引十三跋折羅跋折羅十三多伽𩕳引也十四多伽𩕳引也十五娑發吒二合十六娑發吒二合十七吽發吒引二合十八爾時佛說此真言。",
        "from": "T21n1220_001:0098b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三千大千世界六種震動。",
        "from": "T21n1220_001:0098b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩醯首羅等大自在力王眾所居宮殿。",
        "from": "T21n1220_001:0098b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉散動不得安穩。",
        "from": "T21n1220_001:0098b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉雲集來頂戴藥叉金剛。",
        "from": "T21n1220_001:0098b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願大力尊哀愍。",
        "from": "T21n1220_001:0098b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得我無畏安樂威德。",
        "from": "T21n1220_001:0098b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥叉王白佛言。",
        "from": "T21n1220_001:0098b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等魔王等。",
        "from": "T21n1220_001:0098b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所憂惱如何願何為。",
        "from": "T21n1220_001:0098b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言猶暫令可愍此等得樂。",
        "from": "T21n1220_001:0098b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即許此等已。",
        "from": "T21n1220_001:0098b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時魔王白忿怒王言。",
        "from": "T21n1220_001:0098b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我俱共加神力守護佛法各退散。",
        "from": "T21n1220_001:0098b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有惡人怨結於善人起擾惱。",
        "from": "T21n1220_001:0098b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法師應當畫神驗忿怒王像隨意大少。",
        "from": "T21n1220_001:0098b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作三角壇向人所居方。",
        "from": "T21n1220_001:0098b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作惡心誦上大靈驗真言。",
        "from": "T21n1220_001:0098b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日三時二十一遍。",
        "from": "T21n1220_001:0098b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿三日已。",
        "from": "T21n1220_001:0098b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡人死亡眷屬無殘留。",
        "from": "T21n1220_001:0098b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲甦生取蓮花根擣末。",
        "from": "T21n1220_001:0098b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大悲三昧真言一日一夜不飲食。",
        "from": "T21n1220_001:0098b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿一百八遍。",
        "from": "T21n1220_001:0098b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即惡人及眷屬甦。",
        "from": "T21n1220_001:0098b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛法起歸敬。",
        "from": "T21n1220_001:0098b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽合拳屈進力。",
        "from": "T21n1220_001:0098b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作谷口撥之。",
        "from": "T21n1220_001:0098b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心起大悲。",
        "from": "T21n1220_001:0098b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1220_001:0098b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南引伽𠳿婆羅二合設咄嚧嗚𤙖引平莎嚩二合賀欲得佛法大靈驗。",
        "from": "T21n1220_001:0098c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先像前作四肘方壇。",
        "from": "T21n1220_001:0098c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇中安白銅大器。",
        "from": "T21n1220_001:0098c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛滿香水。",
        "from": "T21n1220_001:0098c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從月一日迄十五日。",
        "from": "T21n1220_001:0098c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香散花致誠禮敬。",
        "from": "T21n1220_001:0098c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大靈驗真言。",
        "from": "T21n1220_001:0098c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜無間不嘗睡眠。",
        "from": "T21n1220_001:0098c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全堅固精進。",
        "from": "T21n1220_001:0098c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且不安居不安立留。",
        "from": "T21n1220_001:0098c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五日間無斷絕。",
        "from": "T21n1220_001:0098c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而滿十萬遍。",
        "from": "T21n1220_001:0098c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥叉王自現身加持持誦者。",
        "from": "T21n1220_001:0098c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即念憐愍有情故。",
        "from": "T21n1220_001:0098c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現妙形像。",
        "from": "T21n1220_001:0098c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二世菩提何非成就。",
        "from": "T21n1220_001:0098c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即隨喜怖畏被此忿怒尊加持。",
        "from": "T21n1220_001:0098c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時設諸惡人惡魔惡禽獸。",
        "from": "T21n1220_001:0098c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至厭禱蠱術魑魅魍魎惡鬼神等。",
        "from": "T21n1220_001:0098c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起惡心欲惱害行人。",
        "from": "T21n1220_001:0098c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近來向行人住處。",
        "from": "T21n1220_001:0098c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則路中自所殺害。",
        "from": "T21n1220_001:0098c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此神驗卅里外圍繞。",
        "from": "T21n1220_001:0098c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無諸障礙。",
        "from": "T21n1220_001:0098c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又金剛藥叉為施調伏故。",
        "from": "T21n1220_001:0098c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說大威怒王根本大心真言是呪印甚祕密故。",
        "from": "T21n1220_001:0098c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非表儀軌。",
        "from": "T21n1220_001:0098c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即在別卷。",
        "from": "T21n1220_001:0098c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近阿闍梨。",
        "from": "T21n1220_001:0098c14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承事可習學。",
        "from": "T21n1220_001:0098c14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚密故誦此呪時。",
        "from": "T21n1220_001:0098c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魔王鬼眾。",
        "from": "T21n1220_001:0098c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得安穩怖懼之事。",
        "from": "T21n1220_001:0098c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大靈驗真言無異。",
        "from": "T21n1220_001:0098c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪印別。",
        "from": "T21n1220_001:0098c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲行此呪。",
        "from": "T21n1220_001:0098c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如聖不動尊念誦儀軌。",
        "from": "T21n1220_001:0098c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作法先右膝著地。",
        "from": "T21n1220_001:0098c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命一切佛菩薩。",
        "from": "T21n1220_001:0098c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔無始生死罪障。",
        "from": "T21n1220_001:0098c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜一切諸佛菩薩所集善根。",
        "from": "T21n1220_001:0098c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請一切如來聖眾。",
        "from": "T21n1220_001:0098c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心供養諸佛即勸請真言曰。",
        "from": "T21n1220_001:0098c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一嚩日囉二合藥叉二合也多多那伽梨那二尾𮑱吒引吽吽莎嚩二合賀引澡像真言曰。",
        "from": "T21n1220_001:0099a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵吽娑婆嚕儞也二合唅閼伽真言曰。",
        "from": "T21n1220_001:0099a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿頗羅二合底𩕳引吽奉座真言曰。",
        "from": "T21n1220_001:0099a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾迦尼左羅尼二噁入著衣瓔珞真言曰。",
        "from": "T21n1220_001:0099a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵矩尼矩尼薩矩尼引也伊牟獻香花燈塗真言曰。",
        "from": "T21n1220_001:0099a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵摩尼引娜伽伽娜三摩三摩矩囐提噁莎嚩二合賀讚嘆藥叉金剛曰。",
        "from": "T21n1220_001:0099a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉二合噯咄羅藥乞叉嚩日囉二合底哩𩕳尾𮑱梨二合賀𩕳引上嚩日囉二合摩訶藥乞叉上藥乞叉上婆𩕳伽𩕳也引平噁短生歡喜悅意。",
        "from": "T21n1220_001:0099a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可誦此讚嘆偈。",
        "from": "T21n1220_001:0099a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉噁藥叉　　憐愍有情我等類",
        "from": "T21n1220_001:0099a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無倫比像化含靈　　何者寧為何惱法",
        "from": "T21n1220_001:0099a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持數珠真言曰。",
        "from": "T21n1220_001:0099a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日囉豎尼奉送真言曰。",
        "from": "T21n1220_001:0099a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾訖灑二合耶吽噁入上所說十種供養讚嘆等真言。",
        "from": "T21n1220_001:0099a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆持用三股金剛杵。",
        "from": "T21n1220_001:0099a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽中受鈷當心誦一一真言。",
        "from": "T21n1220_001:0099a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各應想流出威德。",
        "from": "T21n1220_001:0099a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執持金剛鈷。",
        "from": "T21n1220_001:0099a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1220_001:0099a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一參㕹縛日羅二合醯𩕳尾吠縛日羅二合噁若欲一切障難解脫。",
        "from": "T21n1220_001:0099a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合丸藥二兩。",
        "from": "T21n1220_001:0099a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各把左右掌。",
        "from": "T21n1220_001:0099a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "踞著者而誦大靈驗真言七遍。",
        "from": "T21n1220_001:0099a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持著者塗背後。",
        "from": "T21n1220_001:0099b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時解脫一切障難一切口舌橫死短命等。",
        "from": "T21n1220_001:0099b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若又欲急殺惡人。",
        "from": "T21n1220_001:0099b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫人像姓名置調伏壇。",
        "from": "T21n1220_001:0099b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最初角削竹釘穿立腹中。",
        "from": "T21n1220_001:0099b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大靈驗真言。",
        "from": "T21n1220_001:0099b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以嚗噁卒怒心。",
        "from": "T21n1220_001:0099b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪一百八遍。",
        "from": "T21n1220_001:0099b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍一打便斃。",
        "from": "T21n1220_001:0099b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲急縛惡人令歸佛道。",
        "from": "T21n1220_001:0099b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以惡心誦大呪三遍。",
        "from": "T21n1220_001:0099b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取黑石共後發吒。",
        "from": "T21n1220_001:0099b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羽內迴之自然被縛。",
        "from": "T21n1220_001:0099b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲解免者。",
        "from": "T21n1220_001:0099b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大慈三昧明三遍。",
        "from": "T21n1220_001:0099b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便得本心即言。",
        "from": "T21n1220_001:0099b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今已後歸依佛道。",
        "from": "T21n1220_001:0099b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不生起邪見不善心。",
        "from": "T21n1220_001:0099b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲好女自得及令他得。",
        "from": "T21n1220_001:0099b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "松皮書好女姓名。",
        "from": "T21n1220_001:0099b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫像前誦大慈三昧真言。",
        "from": "T21n1220_001:0099b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七遍啟白威怒王。",
        "from": "T21n1220_001:0099b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是每日三時繫念。",
        "from": "T21n1220_001:0099b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白啟威怒王慈愍故。",
        "from": "T21n1220_001:0099b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自乘好女意。",
        "from": "T21n1220_001:0099b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令生他心自從宮宅出跉來。",
        "from": "T21n1220_001:0099b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛著夫人。",
        "from": "T21n1220_001:0099b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無他念。",
        "from": "T21n1220_001:0099b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧他妻非他夫。",
        "from": "T21n1220_001:0099b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫厭妻妻厭夫。",
        "from": "T21n1220_001:0099b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心一向歸後夫婦妻。",
        "from": "T21n1220_001:0099b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱常發菩提心。",
        "from": "T21n1220_001:0099b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒教化夫人矣。",
        "from": "T21n1220_001:0099b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲得官位。",
        "from": "T21n1220_001:0099b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像前至心燒香。",
        "from": "T21n1220_001:0099b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設種種供養。",
        "from": "T21n1220_001:0099b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三日三夜乃至七日七夜間。",
        "from": "T21n1220_001:0099b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可誦大慈三昧。",
        "from": "T21n1220_001:0099b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言祈願。",
        "from": "T21n1220_001:0099b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所願無一不成。",
        "from": "T21n1220_001:0099b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則作增益法。",
        "from": "T21n1220_001:0099b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自成就唯修行法時。",
        "from": "T21n1220_001:0099b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨念向望方。",
        "from": "T21n1220_001:0099b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "細示方如護摩壇作法已。",
        "from": "T21n1220_001:0099b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲出道場誦此真言。",
        "from": "T21n1220_001:0099b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發遣聖眾。",
        "from": "T21n1220_001:0099b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1220_001:0099b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合藥乞叉二合底那底他也二合毘吽吽噁說此等種雜威德瞋怒法時。",
        "from": "T21n1220_001:0099b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魔怨調伏加衛護。",
        "from": "T21n1220_001:0099b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願護持佛法。",
        "from": "T21n1220_001:0099b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故行者修習時。",
        "from": "T21n1220_001:0099b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎莫起惡心數損他。",
        "from": "T21n1220_001:0099b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有智人善悟是祕道。",
        "from": "T21n1220_001:0099b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒亂不得誦呪。",
        "from": "T21n1220_001:0099b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除耎和忍辱人。",
        "from": "T21n1220_001:0099b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年滿四十而得自順順他。",
        "from": "T21n1220_001:0099b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者若幼稚人行好習誦時不得解脫道。",
        "from": "T21n1220_001:0099b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨自損損他深過。",
        "from": "T21n1220_001:0099b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者多應有慈悲利益一切有情界。",
        "from": "T21n1220_001:0099b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出堂任意而轉讀大乘。",
        "from": "T21n1220_001:0099c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住不退轉地。",
        "from": "T21n1220_001:0099c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藥叉念誦儀軌",
        "from": "T21n1220_001:0099c02_100",
        "context_with_next_sentence": false
    }
]