[
    {
        "source_sentence": "右繞佛塔功德經",
        "from": "T16n0700_001:0801b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大周于闐國三藏沙門",
        "from": "T16n0700_001:0801b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實叉難陀等奉　制譯",
        "from": "T16n0700_001:0801b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞：",
        "from": "T16n0700_001:0801b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時，佛在舍衛國祇樹給孤獨園，與大比丘僧及餘無量眾俱，前後圍遶。",
        "from": "T16n0700_001:0801b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時，長老舍利弗即從坐起，偏袒右肩，右膝著地，合掌向佛，以偈請曰：",
        "from": "T16n0700_001:0801b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「大威德世尊，　　願為我等說，",
        "from": "T16n0700_001:0801c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右遶於佛塔，　　所得之果報。",
        "from": "T16n0700_001:0801c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時世尊以偈答曰：",
        "from": "T16n0700_001:0801c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「右繞於佛塔，　　所得諸功德，",
        "from": "T16n0700_001:0801c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說少分，　　汝等咸善聽。",
        "from": "T16n0700_001:0801c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天龍、　　夜叉、鬼神等，",
        "from": "T16n0700_001:0801c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆親近供養，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在在所生處，　　遠離於八難，",
        "from": "T16n0700_001:0801c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常生無難處，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切生處，　　念慧常無失，",
        "from": "T16n0700_001:0801c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足妙色相，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來天人中，　　福命悉長遠，",
        "from": "T16n0700_001:0801c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常獲大名稱，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於閻浮提，　　常生最尊勝，",
        "from": "T16n0700_001:0801c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨種姓中，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀貌常端正，　　富貴多財寶，",
        "from": "T16n0700_001:0801c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒食大封邑，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "財寶常盈積，　　而無慳悋心，",
        "from": "T16n0700_001:0801c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛廣惠施，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色相淨微妙，　　見者皆欣仰，",
        "from": "T16n0700_001:0801c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所住常安樂，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為忉利王，　　妻子悉具足，",
        "from": "T16n0700_001:0801c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威勢力自在，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作婆羅門，　　持戒善通達，",
        "from": "T16n0700_001:0801c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪術、圍陀典，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作大長者，　　豪貴多財產，",
        "from": "T16n0700_001:0801c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倉廩常豐足，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作正法王，　　自在王閻浮，",
        "from": "T16n0700_001:0801c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "率土咸歸化，　　斯由右繞塔。",
        "from": "T16n0700_001:0801c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為具七寶，　　大勢轉輪王，",
        "from": "T16n0700_001:0802a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十善御群生，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此生天上，　　常有大威德，",
        "from": "T16n0700_001:0802a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨信於佛法，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨信速成已，　　於法無迷惑，",
        "from": "T16n0700_001:0802a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見諸行皆空，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從天上捨命，　　下生於人中，",
        "from": "T16n0700_001:0802a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入胎不迷亂，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於母胎中，　　垢穢所不染，",
        "from": "T16n0700_001:0802a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如淨摩尼珠，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在胎及生時，　　令母常安樂，",
        "from": "T16n0700_001:0802a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲乳亦復然，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母及親戚，　　一切共鞠養，",
        "from": "T16n0700_001:0802a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乳母常不離，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眷屬皆愛念，　　超過於父母，",
        "from": "T16n0700_001:0802a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資財自增長，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜叉諸惡鬼，　　不能暫驚怖，",
        "from": "T16n0700_001:0802a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所須自然得，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經於百千劫，　　其身轉清淨，",
        "from": "T16n0700_001:0802a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙色相成滿，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨眼修且廣，　　猶如青蓮花，",
        "from": "T16n0700_001:0802a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼得淨天眼，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙色常圓滿，　　諸相自莊嚴，",
        "from": "T16n0700_001:0802a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就大勢力，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生帝釋宮，　　大威勢自在，",
        "from": "T16n0700_001:0802a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忉利天中尊，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生須夜摩、　　兜率陀天宮、",
        "from": "T16n0700_001:0802a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化樂及他化，　　斯由右繞塔。",
        "from": "T16n0700_001:0802a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復生梵天，　　梵世最自在，",
        "from": "T16n0700_001:0802a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天常供養，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "億那由他劫，　　常為諸智人，",
        "from": "T16n0700_001:0802b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬而供養，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身及衣服，　　億劫常無垢，",
        "from": "T16n0700_001:0802b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足白淨法，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具大精進力，　　勤修種種行，",
        "from": "T16n0700_001:0802b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未嘗有疲懈，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛常精進，　　堅固不可壞，",
        "from": "T16n0700_001:0802b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作速成就，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深遠微妙音，　　聞者皆歡喜，",
        "from": "T16n0700_001:0802b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂常無病，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我所演說，　　厭捨三有苦，",
        "from": "T16n0700_001:0802b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就出世智，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常在四念處，　　及以四正勤，",
        "from": "T16n0700_001:0802b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四如意神足，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達四真諦、　　根、力、七覺分，",
        "from": "T16n0700_001:0802b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正道及聖果，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅一切煩惱，　　具足大威德，",
        "from": "T16n0700_001:0802b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無漏六神通，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離貪、恚、癡，　　及一切障礙，",
        "from": "T16n0700_001:0802b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證獨覺菩提，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得妙紫金色，　　相好莊嚴身，",
        "from": "T16n0700_001:0802b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現作天人師，　　斯由右繞塔。",
        "from": "T16n0700_001:0802b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由以身業，　　及語業讚歎，",
        "from": "T16n0700_001:0802b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞於佛塔，　　獲此大利益。",
        "from": "T16n0700_001:0802b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞諸佛塔，　　所得諸功德，",
        "from": "T16n0700_001:0802b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今隨所聞，　　略說詎能盡？",
        "from": "T16n0700_001:0802b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時世尊說此偈已，舍利弗等一切眾會，皆大歡喜，信受奉行。",
        "from": "T16n0700_001:0802b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞佛塔功德經",
        "from": "T16n0700_001:0802c01_100",
        "context_with_next_sentence": false
    }
]