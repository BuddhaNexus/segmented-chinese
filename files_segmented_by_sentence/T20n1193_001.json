[
    {
        "source_sentence": "妙吉祥平等瑜伽祕密觀身成佛",
        "from": "T20n1193_001:0930a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀軌",
        "from": "T20n1193_001:0930a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋大契丹國師中天竺",
        "from": "T20n1193_001:0930a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩竭陀國三藏法師慈賢譯凡欲課誦法事供養。",
        "from": "T20n1193_001:0930a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先歸命佛念八大願。",
        "from": "T20n1193_001:0930a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0930a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初入道場　　面向於佛　　坐想此身",
        "from": "T20n1193_001:0930b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "碎如微塵　　返收攝身　　如金剛體",
        "from": "T20n1193_001:0930b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0930b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵囉祖波誐哆薩囉嚩達麼二合口四業清淨。",
        "from": "T20n1193_001:0930b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩枳也二合󰡊馱薩嚩達囉麼二合嚩枳也二合󰡊度唅心三業清淨。",
        "from": "T20n1193_001:0930b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵唧哆󰡊馱薩嚩囉摩二合唧哆󰡊度唅身三業清淨。",
        "from": "T20n1193_001:0930b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業清淨已　　運心六道中",
        "from": "T20n1193_001:0930b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸眾生報障業障煩惱等障。",
        "from": "T20n1193_001:0930b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆消滅獲得清淨。",
        "from": "T20n1193_001:0930b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想上方佛壇運心供養。",
        "from": "T20n1193_001:0930b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又想自手作金剛手。",
        "from": "T20n1193_001:0930b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足眼心等亦復如是。",
        "from": "T20n1193_001:0930b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛身禮事諸佛。",
        "from": "T20n1193_001:0930b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後又想自手五指。",
        "from": "T20n1193_001:0930b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取金剛智五甘露水自灌其頂。",
        "from": "T20n1193_001:0930b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗滌五身十業六塵。",
        "from": "T20n1193_001:0930b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想凡夫身都無所有。",
        "from": "T20n1193_001:0930b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如淨月輪輪上己身。",
        "from": "T20n1193_001:0930b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽字之形猶如光焰。",
        "from": "T20n1193_001:0930b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依月輪住如燈光量念此真言加持七遍。",
        "from": "T20n1193_001:0930c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0930c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵󰂛地唧多母怛跛二合那耶弭復想吽字形。",
        "from": "T20n1193_001:0930c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月輪上而住。",
        "from": "T20n1193_001:0930c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大光明聚。",
        "from": "T20n1193_001:0930c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想身火星散。",
        "from": "T20n1193_001:0930c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良久而復收。",
        "from": "T20n1193_001:0930c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言七遍。",
        "from": "T20n1193_001:0930c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想月輪上　　有小光明住",
        "from": "T20n1193_001:0930c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而誦此真言　　應當一七遍",
        "from": "T20n1193_001:0930c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0930c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小光明不動　　想身旋復去",
        "from": "T20n1193_001:0930c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而念此真言　　亦應一七遍",
        "from": "T20n1193_001:0930c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0930c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想身而來　　念真言七遍",
        "from": "T20n1193_001:0930c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0930c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想身而入　　將成大覺身",
        "from": "T20n1193_001:0930c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此祕密言　　加持一七遍",
        "from": "T20n1193_001:0930c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0930c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想小光明住　　如同大覺身",
        "from": "T20n1193_001:0930c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此陀羅尼　　復應一七遍",
        "from": "T20n1193_001:0930c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0930c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復觀自身　　為金剛之體",
        "from": "T20n1193_001:0930c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如如來身　　等同無有異",
        "from": "T20n1193_001:0930c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三誦此真言唵野多薩嚩怛他誐哆娑怛二合佉憾次應右手執金剛杵。",
        "from": "T20n1193_001:0931a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執鈴作波羅蜜。",
        "from": "T20n1193_001:0931a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩持課杵表佛印。",
        "from": "T20n1193_001:0931a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其杵五鈷表如來。",
        "from": "T20n1193_001:0931a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈴表四波羅蜜。",
        "from": "T20n1193_001:0931a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩諦想自身作寶生佛。",
        "from": "T20n1193_001:0931a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲杵三遍。",
        "from": "T20n1193_001:0931a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當舞轉作蓮華印。",
        "from": "T20n1193_001:0931a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印已頂禮。",
        "from": "T20n1193_001:0931a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮已執杵。",
        "from": "T20n1193_001:0931a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指頂口心。",
        "from": "T20n1193_001:0931a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦唵阿去聲吽。",
        "from": "T20n1193_001:0931a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三種智字。",
        "from": "T20n1193_001:0931a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想頂作壇。",
        "from": "T20n1193_001:0931a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先想安置頂內蓮華。",
        "from": "T20n1193_001:0931a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其蓮八葉。",
        "from": "T20n1193_001:0931a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安蓮華已。",
        "from": "T20n1193_001:0931a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次臥金剛。",
        "from": "T20n1193_001:0931a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其金剛上有日月輪。",
        "from": "T20n1193_001:0931a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於日輪上有十二字。",
        "from": "T20n1193_001:0931a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月輪之上復有十六。",
        "from": "T20n1193_001:0931a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵字之母。",
        "from": "T20n1193_001:0931a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生之法。",
        "from": "T20n1193_001:0931a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可得故。",
        "from": "T20n1193_001:0931a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月輪上想安唵字。",
        "from": "T20n1193_001:0931a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又觀唵字旋復而去。",
        "from": "T20n1193_001:0931a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良久乃來作輪字形。",
        "from": "T20n1193_001:0931a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想一返為毘盧佛。",
        "from": "T20n1193_001:0931a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘四方佛次第安置。",
        "from": "T20n1193_001:0931a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆同等四波羅蜜。",
        "from": "T20n1193_001:0931a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應念種智而居四隅坐三重座。",
        "from": "T20n1193_001:0931a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無其月輪。",
        "from": "T20n1193_001:0931a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下至明王。",
        "from": "T20n1193_001:0931a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應皆如是。",
        "from": "T20n1193_001:0931a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已上九位住第一院。",
        "from": "T20n1193_001:0931a13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內八菩薩念種智字。",
        "from": "T20n1193_001:0931a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於第二院次第分布。",
        "from": "T20n1193_001:0931a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外十二尊十明王等。",
        "from": "T20n1193_001:0931a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦念種智及其密號。",
        "from": "T20n1193_001:0931a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處第三院依位安立。",
        "from": "T20n1193_001:0931a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想壇畢已。",
        "from": "T20n1193_001:0931a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀身為佛。",
        "from": "T20n1193_001:0931a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即念佛壇。",
        "from": "T20n1193_001:0931a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0931a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沒馱嚩日囉二合達囉室哩二合滿曩一底哩二合嚩日囉二合二鼻儞也二合婆尾曩三阿底瑟吒二合曩播能上聲弭儞養二合四迦嚕凍迦野嚩日哩二合曩五那舍捺儗二合僧悉體二合哆沒馱六屈嘌二合鑁覩七迦野嚩日哩二合曩引八唵薩嚩怛他誐哆九迦野嚩日囉二合十娑嚩二合娑嚩怛麼句唅十一次想口中法壇位。",
        "from": "T20n1193_001:0931a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想阿字形。",
        "from": "T20n1193_001:0931a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去而復來成寶蓮華。",
        "from": "T20n1193_001:0931a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想一返為阿彌陀。",
        "from": "T20n1193_001:0931a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同前觀想。",
        "from": "T20n1193_001:0931a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應念法壇。",
        "from": "T20n1193_001:0931a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0931a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達囉麼二合吠嚩迦播他室哩二合滿曩一底哩嚩日囉二合鼻儞也二合婆尾曩二阿地瑟吒二合娜播能弭儞養二合三迦嚕凍嚩誐嚩日哩二合娜四那舍捺儗二合僧悉帝二合哆沒馱五屈嘌二合鑁覩六嚩誐嚩日哩二合曩引七唵薩嚩八怛他誐多九嚩日囉二合娑嚩二合十婆嚩怛麼二合句憾十一次想心內僧壇位。",
        "from": "T20n1193_001:0931b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀吽字形。",
        "from": "T20n1193_001:0931b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去而復來即為金剛。",
        "from": "T20n1193_001:0931b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想一返成阿閦尊。",
        "from": "T20n1193_001:0931b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同前觀行。",
        "from": "T20n1193_001:0931b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當念僧壇。",
        "from": "T20n1193_001:0931b07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T20n1193_001:0931b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想成三寶已　　安心寂不動",
        "from": "T20n1193_001:0931b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以金剛索　　繫閉六根門",
        "from": "T20n1193_001:0931b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨念隨一繫　　如被金剛甲",
        "from": "T20n1193_001:0931b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1193_001:0931b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵砧胝陰切吽嚩日囉二合𠸪乞囉二合引次應慇重心。",
        "from": "T20n1193_001:0931b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命三寶壇。",
        "from": "T20n1193_001:0931b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦陀羅尼。",
        "from": "T20n1193_001:0931b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命三寶已　　面前想一壇",
        "from": "T20n1193_001:0931b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下是風火水　　土輪最居上",
        "from": "T20n1193_001:0931c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土上四色鐵　　鐵上三角土",
        "from": "T20n1193_001:0931c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為雜寶地　　次以兩手叉",
        "from": "T20n1193_001:0931c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌心安於地　　金剛不用壇",
        "from": "T20n1193_001:0931c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此而安置　　應觀阿字形",
        "from": "T20n1193_001:0931c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而在壇中住　　想字去復來",
        "from": "T20n1193_001:0931c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在寶蓮華上　　次應想吽字",
        "from": "T20n1193_001:0931c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而住寶金剛　　復想勃弄唵",
        "from": "T20n1193_001:0931c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字作七寶樓　　內有三重壇",
        "from": "T20n1193_001:0931c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復有四門　　四門各四色",
        "from": "T20n1193_001:0931c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東白南青色　　西黃北金色",
        "from": "T20n1193_001:0931c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想於其閣中　　而有日月輪",
        "from": "T20n1193_001:0931c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復念唵阿吽　　想於月輪上",
        "from": "T20n1193_001:0931c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又觀唵字身　　化為佛輪形",
        "from": "T20n1193_001:0931c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應想阿字　　而成寶蓮華",
        "from": "T20n1193_001:0931c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想吽字體　　而作智金剛",
        "from": "T20n1193_001:0931c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後想三字　　同去而復來",
        "from": "T20n1193_001:0931c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而在壇中住　　五佛波羅蜜",
        "from": "T20n1193_001:0931c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外十二尊　　十大明王等",
        "from": "T20n1193_001:0931c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種智與次第　　廣如上所說",
        "from": "T20n1193_001:0931c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以兩手作蓮華形。",
        "from": "T20n1193_001:0931c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想往上方捧接如來。",
        "from": "T20n1193_001:0931c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此真言而誦三遍。",
        "from": "T20n1193_001:0931c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想請上方佛　　已降於壇內",
        "from": "T20n1193_001:0931c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而念此真言　　運心東門拜",
        "from": "T20n1193_001:0931c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想佛至壇已　　求寶瓶灌頂",
        "from": "T20n1193_001:0932a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而念此真言　　運心南門禮",
        "from": "T20n1193_001:0932a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想灌頂已　　歸命於如來",
        "from": "T20n1193_001:0932a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法而修行　　廣陳法供養",
        "from": "T20n1193_001:0932a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而誦此真言　　想於西門禮",
        "from": "T20n1193_001:0932a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應想自身　　堅固不生滅",
        "from": "T20n1193_001:0932a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辦事無有窮　　當供養於佛",
        "from": "T20n1193_001:0932a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願一切有情　　皆獲悉地果",
        "from": "T20n1193_001:0932a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而誦此真言　　想於北門禮",
        "from": "T20n1193_001:0932a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復懇告於佛　　我今當志誠",
        "from": "T20n1193_001:0932a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨分而供養　　歸命於如來",
        "from": "T20n1193_001:0932a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而誦此伽陀　　東門禮中方",
        "from": "T20n1193_001:0932a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以五佛讚　　歌詠於如來",
        "from": "T20n1193_001:0932a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方禮四佛　　東方禮中尊",
        "from": "T20n1193_001:0932a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名智金剛身噁乞嚕二合毘夜二合嚩日囉二合一摩賀抳也二合曩二嚩日囉二合馱覩三摩賀沒馱四底哩二合曼拏攞五底哩二合嚩日囉二合誐囉二合六俱灑嚩日囉二合七曩謨窣覩二合帝引八毘盧如來佛金剛身。",
        "from": "T20n1193_001:0932b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吠嚕左曩一摩訶󰡊馱二嚩日囉二合爽哆三摩訶囉帝四鉢囉二合迦哩二合底五鉢囉二合婆娑嚩二合囉二合仡囉二合誐囕二合七儞吠二合沙嚩日囉二合八曩謨窣覩二合帝九寶生如來寶金剛身。",
        "from": "T20n1193_001:0932b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囉怛曩二合囉惹一素儼鼻囉佉二嚩日囉二合迦沙三寧哩二合摩攞四娑嚩二合婆去聲嚩󰡊馱五寧㘑播六迦野嚩日囉二合七曩謨窣覩二合帝八阿彌陀如來金剛甘露身。",
        "from": "T20n1193_001:0932b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉二合沒哩哆一摩賀抳也二合曩二寧哩二合尾迦攞二合鉢朅三嚩日囉二合達哩二合迦四囉誐播囉弭哆五鉢囉二合鉢怛二合六婆沙嚩日囉二合七曩謨窣覩二合帝八不空成就如來金剛覺有情身。",
        "from": "T20n1193_001:0932b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚唄五佛已　　運心想地壇",
        "from": "T20n1193_001:0932b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起置於頂上　　猶若戴頭冠",
        "from": "T20n1193_001:0932b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二壇如水乳　　和合一處坐",
        "from": "T20n1193_001:0932b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各不分別　　安坐諦思惟",
        "from": "T20n1193_001:0932b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結契念本明　　彼彼諸尊位",
        "from": "T20n1193_001:0932b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿閦如來契　　左拳安於臍",
        "from": "T20n1193_001:0932c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那佛　　右羽金剛拳",
        "from": "T20n1193_001:0932c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶生如來印　　左拳安於臍",
        "from": "T20n1193_001:0932c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀如來　　二羽仰相叉",
        "from": "T20n1193_001:0932c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力竪相背　　禪智橫其端",
        "from": "T20n1193_001:0932c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空成就佛　　左拳復安臍",
        "from": "T20n1193_001:0932c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛波羅蜜　　二羽金剛縛",
        "from": "T20n1193_001:0932c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶波羅蜜契　　不改前印相",
        "from": "T20n1193_001:0932c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法波羅蜜印　　二羽金剛掌",
        "from": "T20n1193_001:0932c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開忍願進力　　附忍願上文",
        "from": "T20n1193_001:0932c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯磨波羅蜜　　二羽金剛縛",
        "from": "T20n1193_001:0932c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩二十尊　　印相應當說",
        "from": "T20n1193_001:0933a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛縛　　左右而掣開",
        "from": "T20n1193_001:0933a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地藏菩薩契　　二手旋舞儀",
        "from": "T20n1193_001:0933a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便成金剛縛　　仰手而開散",
        "from": "T20n1193_001:0933a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下至諸尊位　　先縛後旋舞",
        "from": "T20n1193_001:0933a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手菩薩　　左拳安腰側",
        "from": "T20n1193_001:0933a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右羽如施願　　禪押於忍度",
        "from": "T20n1193_001:0933a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空菩薩密契　　左拳復安腰",
        "from": "T20n1193_001:0933a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手在心前　　以禪押忍度",
        "from": "T20n1193_001:0933a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩　　左拳安腰側",
        "from": "T20n1193_001:0933a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右羽屈戒度　　右旋住心散",
        "from": "T20n1193_001:0933a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除蓋障菩薩　　二羽進力鉤",
        "from": "T20n1193_001:0933a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩埵菩薩印　　左拳安於腰",
        "from": "T20n1193_001:0933a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手於臍側　　屈忍禪掐進",
        "from": "T20n1193_001:0933a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥菩薩　　左拳復安腰",
        "from": "T20n1193_001:0933a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右羽禪捻忍　　兩眼隨手視",
        "from": "T20n1193_001:0933a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩印　　左拳安腰側",
        "from": "T20n1193_001:0933a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右羽在心前　　掐忍指中文",
        "from": "T20n1193_001:0933a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣供養菩薩　　左拳安於腰",
        "from": "T20n1193_001:0933b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右羽面前　　彈忍指而散",
        "from": "T20n1193_001:0933b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貫華菩薩印　　右左手懷中",
        "from": "T20n1193_001:0933b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶若取華勢　　想安佛頂上",
        "from": "T20n1193_001:0933b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散華菩薩契　　左羽智捻願",
        "from": "T20n1193_001:0933b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右羽禪捻忍　　面前向外散",
        "from": "T20n1193_001:0933b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香菩薩契　　二羽執香爐",
        "from": "T20n1193_001:0933b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈供養菩薩　　左手捧右羽",
        "from": "T20n1193_001:0933b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甘露菩薩契　　想左手掌中",
        "from": "T20n1193_001:0933b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有甘露水　　右手名指彈",
        "from": "T20n1193_001:0933b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鏡供養菩薩　　左拳安於腰",
        "from": "T20n1193_001:0933b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手於面前　　猶如執鏡勢",
        "from": "T20n1193_001:0933b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舞供養菩薩　　二手作舞勢",
        "from": "T20n1193_001:0933b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歌供養菩薩　　左拳安腰側",
        "from": "T20n1193_001:0933b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右羽忍進指　　直竪而相拍",
        "from": "T20n1193_001:0933b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合儗帝吽引此處應用十大明王真言印契。",
        "from": "T20n1193_001:0933b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣如別卷。",
        "from": "T20n1193_001:0933b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密供養已　　更以飲食獻",
        "from": "T20n1193_001:0933b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華果及塗香　　種種而供養",
        "from": "T20n1193_001:0933b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有心疲倦　　不盡諸法式",
        "from": "T20n1193_001:0933c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲出於道場　　當念奉送明",
        "from": "T20n1193_001:0933c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復自諦思惟　　仰啟諸如來",
        "from": "T20n1193_001:0933c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我運心供養　　或有錯誤者",
        "from": "T20n1193_001:0933c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願佛哀愍我　　再降甘露水",
        "from": "T20n1193_001:0933c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗滌一切罪　　悉皆令消滅",
        "from": "T20n1193_001:0933c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛阿闍黎　　與弟子灌頂",
        "from": "T20n1193_001:0933c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上先想壇　　亦應誦密語",
        "from": "T20n1193_001:0933c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂四明王鉢囉二合抳也二合怛迦真言用掐華打弟子五障鉢納麼二合明王。",
        "from": "T20n1193_001:0934a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而燒白芥子　　熏授法之者",
        "from": "T20n1193_001:0934a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸煩惱　　吒枳囉惹王",
        "from": "T20n1193_001:0934a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持於淨水　　以灑弟子身",
        "from": "T20n1193_001:0934a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而除諸罪垢　　播多攞真言",
        "from": "T20n1193_001:0934a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用加持生飯　　供養於諸天",
        "from": "T20n1193_001:0934a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍神八部等　　此法甚祕密",
        "from": "T20n1193_001:0934a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得妄宣傳　　除逢智慧人",
        "from": "T20n1193_001:0934a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃可為宣說妙吉祥平等瑜伽祕密觀身成佛儀軌",
        "from": "T20n1193_001:0934a10_100",
        "context_with_next_sentence": false
    }
]