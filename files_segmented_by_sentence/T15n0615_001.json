[
    {
        "source_sentence": "菩薩訶色欲法經",
        "from": "T15n0615_001:0286a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後秦三藏鳩摩羅什譯",
        "from": "T15n0615_001:0286a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女色者，世間之枷鎖，凡夫戀著，不能自拔。女",
        "from": "T15n0615_001:0286a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色者，世間之重患，凡夫困之，至死不免。",
        "from": "T15n0615_001:0286a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女色者，世間之衰禍，凡夫遭之，無厄不至。",
        "from": "T15n0615_001:0286a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者既得捨之，若復顧念，是為從獄得出，還復思入；",
        "from": "T15n0615_001:0286a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從狂得正，而復樂之；",
        "from": "T15n0615_001:0286a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從病得差，復思得病。",
        "from": "T15n0615_001:0286a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者怒之，知其狂而顛蹶，死無日矣！",
        "from": "T15n0615_001:0286a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫重色，甘為之僕，終身馳驟，為之辛苦。",
        "from": "T15n0615_001:0286a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復鈇質寸斬，鋒鏑交至，甘心受之，不以為患。",
        "from": "T15n0615_001:0286a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狂人樂狂，不是過也。",
        "from": "T15n0615_001:0286a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者若能棄之不顧，是則破枷脫鎖，惡狂厭病，離於衰禍，既安且吉，得出牢獄，永無患難。",
        "from": "T15n0615_001:0286a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女人之相，其言如蜜，而其心如毒，譬如：",
        "from": "T15n0615_001:0286b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "停淵澄鏡，而蛟龍居之；",
        "from": "T15n0615_001:0286b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金山寶窟，而師子處之；",
        "from": "T15n0615_001:0286b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此害不可近。",
        "from": "T15n0615_001:0286b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "室家不和，婦人之由；",
        "from": "T15n0615_001:0286b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀宗敗族，婦人之罪。",
        "from": "T15n0615_001:0286b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實是陰賊，滅人慧明；",
        "from": "T15n0615_001:0286b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是獵圍，尠得出者。",
        "from": "T15n0615_001:0286b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如高羅，群鳥落之，不能奮飛；",
        "from": "T15n0615_001:0286b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如密網，眾魚投之，刳腸俎肌；",
        "from": "T15n0615_001:0286b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如暗坑，無目投之，如蛾赴火。",
        "from": "T15n0615_001:0286b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以智者知而遠之，不受其害；",
        "from": "T15n0615_001:0286b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡而穢之，不為此物之所惑也。",
        "from": "T15n0615_001:0286b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩訶色欲法經",
        "from": "T15n0615_001:0286b09_100",
        "context_with_next_sentence": false
    }
]