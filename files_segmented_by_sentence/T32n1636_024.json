[
    {
        "source_sentence": "大乘集菩薩學論卷第二十四",
        "from": "T32n1636_024:0138c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T32n1636_024:0138c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚卿宣梵大師賜紫",
        "from": "T32n1636_024:0138c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸有道路河流處，　　能建橋梁及舡筏，",
        "from": "T32n1636_024:0138c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為利樂諸眾生，　　稱讚寂靜令忻悟。",
        "from": "T32n1636_024:0138c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光名除渴愛，　　此光能覺諸含識，",
        "from": "T32n1636_024:0138c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其捨離於五欲，　　專求解脫深妙法，",
        "from": "T32n1636_024:0138c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能捨離於五欲，　　專求解脫深妙法，",
        "from": "T32n1636_024:0138c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能以佛甘露雨，　　普滅世間諸渴愛，",
        "from": "T32n1636_024:0138c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惠施池井及泉流，　　勤求無上菩提道，",
        "from": "T32n1636_024:0138c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀呰五欲讚禪定，　　是故光名除渴愛。",
        "from": "T32n1636_024:0138c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名作變，　　此光能覺諸眾生，",
        "from": "T32n1636_024:0138c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者令慕佛菩提，　　發心願證無師智，",
        "from": "T32n1636_024:0138c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造立如來大悲像，　　眾相莊嚴處蓮座，",
        "from": "T32n1636_024:0139a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常歎最勝佛功德，　　是故此光名作愛。",
        "from": "T32n1636_024:0139a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名忻樂，　　此光能覺諸眾生，",
        "from": "T32n1636_024:0139a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其心樂於諸佛，　　及以樂法樂眾僧，",
        "from": "T32n1636_024:0139a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常心樂於諸佛，　　及以樂法樂眾僧，",
        "from": "T32n1636_024:0139a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則在如來聖會中，　　逮成無生深法忍，",
        "from": "T32n1636_024:0139a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開悟眾生無有量，　　普使念佛法僧寶，",
        "from": "T32n1636_024:0139a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及示發心功德行，　　是故此光名忻樂。",
        "from": "T32n1636_024:0139a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名福聚，　　此光能覺諸眾生，",
        "from": "T32n1636_024:0139a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其脩習種種施，　　以此願求無上道，",
        "from": "T32n1636_024:0139a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設大施會無遮限，　　諸來乞者皆滿足，",
        "from": "T32n1636_024:0139a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令其心有所乏，　　是故此光名福聚。",
        "from": "T32n1636_024:0139a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名具智，　　此光能覺諸眾生，",
        "from": "T32n1636_024:0139a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一法門了多法，　　於多法門剎那解，",
        "from": "T32n1636_024:0139a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生分別說，　　決定了知真實義，",
        "from": "T32n1636_024:0139a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能廣說無損減，　　是故此光名具智。",
        "from": "T32n1636_024:0139a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名惠燈，　　此光能覺諸眾生，",
        "from": "T32n1636_024:0139a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令知眾生性空寂，　　一切諸法無所有，",
        "from": "T32n1636_024:0139a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法無主宰本來空，　　如幻陽焰水中月，",
        "from": "T32n1636_024:0139a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如夢境及影像，　　是故此光名惠燈。",
        "from": "T32n1636_024:0139a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光名法自在，　　此光能覺諸眾生，",
        "from": "T32n1636_024:0139a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得無盡陀羅尼，　　悉持一切如來藏，",
        "from": "T32n1636_024:0139a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬供養持法者，　　給侍守護如諸仙，",
        "from": "T32n1636_024:0139a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種法施眾生，　　是故光名法自在。",
        "from": "T32n1636_024:0139a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名具捨，　　此光覺悟慳眾生，",
        "from": "T32n1636_024:0139a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令知財富悉無常，　　樂行惠施而無悋，",
        "from": "T32n1636_024:0139a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能調伏彼慳者，　　了財如夢如浮雲，",
        "from": "T32n1636_024:0139a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長惠施清淨心，　　是故此光名具捨。",
        "from": "T32n1636_024:0139a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名除熱，　　此光能覺毀禁者，",
        "from": "T32n1636_024:0139a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令安住清淨戒，　　發心願證無師智，",
        "from": "T32n1636_024:0139b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸勵眾生咸奉持，　　十善業道常清淨，",
        "from": "T32n1636_024:0139b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復令發趣菩提心，　　是故此光名除熱。",
        "from": "T32n1636_024:0139b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名忍嚴，　　此光覺語多瞋者，",
        "from": "T32n1636_024:0139b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令除忿恚及我慢，　　樂脩忍辱常柔和，",
        "from": "T32n1636_024:0139b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生暴惡難行忍，　　為菩提故心不動，",
        "from": "T32n1636_024:0139b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱揚最上忍功德，　　是故此光名忍嚴。",
        "from": "T32n1636_024:0139b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名勤勇，　　此光覺悟懶惰者，",
        "from": "T32n1636_024:0139b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼常於三寶中，　　恭敬供養無疲厭，",
        "from": "T32n1636_024:0139b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼常於三寶中，　　恭敬供養無疲厭，",
        "from": "T32n1636_024:0139b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能超出四魔境，　　速成無上佛菩提，",
        "from": "T32n1636_024:0139b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸諸眾生發精進，　　常於三寶伸供養，",
        "from": "T32n1636_024:0139b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法欲滅時專護持，　　是故此光名勤勇。",
        "from": "T32n1636_024:0139b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名寂靜，　　此光能覺亂意者，",
        "from": "T32n1636_024:0139b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其遠離貪恚癡，　　心不動搖棲正定，",
        "from": "T32n1636_024:0139b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨離一切惡知識，　　無義談說雜染行，",
        "from": "T32n1636_024:0139b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎禪定阿蘭若，　　是故此光名寂靜。",
        "from": "T32n1636_024:0139b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名惠嚴，　　此光覺悟愚迷者，",
        "from": "T32n1636_024:0139b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其證諦解緣起，　　諸根智惠悉通達，",
        "from": "T32n1636_024:0139b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能證諦解緣起，　　諸根智惠悉通達，",
        "from": "T32n1636_024:0139b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則得日燈三摩地，　　智惠光明成佛果，",
        "from": "T32n1636_024:0139b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國財及己皆能捨，　　為菩提故求正法，",
        "from": "T32n1636_024:0139b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已為眾廣開演，　　是故此光名惠嚴。",
        "from": "T32n1636_024:0139b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名佛惠，　　此光覺悟諸含識，",
        "from": "T32n1636_024:0139b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令見無量百千佛，　　各各坐寶蓮花上，",
        "from": "T32n1636_024:0139b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚佛威德及解脫，　　說佛自在諸神通，",
        "from": "T32n1636_024:0139b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯示佛力妙難思，　　是故此光名佛惠。",
        "from": "T32n1636_024:0139b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名無畏，　　此光照觸除諸怖，",
        "from": "T32n1636_024:0139b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非人捶打所執縛，　　一切災難皆令滅，",
        "from": "T32n1636_024:0139b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸眾生施無畏，　　遇有惱害皆能止，",
        "from": "T32n1636_024:0139c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拯濟厄難孤窮者，　　是故此光名無畏。",
        "from": "T32n1636_024:0139c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名安隱，　　此光能照疾病者，",
        "from": "T32n1636_024:0139c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令除一切諸苦痛，　　悉得勝定三昧樂，",
        "from": "T32n1636_024:0139c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施以良藥救眾患，　　妙寶延命香塗體，",
        "from": "T32n1636_024:0139c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌中涌現諸飲食，　　是故此光名安隱。",
        "from": "T32n1636_024:0139c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名見佛，　　此光覺悟將歿者，",
        "from": "T32n1636_024:0139c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其憶念見如來，　　命終得生其淨國，",
        "from": "T32n1636_024:0139c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見有臨終勸念佛，　　又示尊像令瞻敬，",
        "from": "T32n1636_024:0139c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾於佛所深歸仰，　　是故此光名見佛。",
        "from": "T32n1636_024:0139c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名樂法，　　此光能覺諸群生，",
        "from": "T32n1636_024:0139c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令於正法常欣樂，　　聽聞讀誦及書寫，",
        "from": "T32n1636_024:0139c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法欲盡時能演說，　　令求法者意充滿，",
        "from": "T32n1636_024:0139c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於法愛樂勤脩習，　　是故此光名樂法。",
        "from": "T32n1636_024:0139c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名妙音，　　此光開悟諸菩薩，",
        "from": "T32n1636_024:0139c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令三界所有聲，　　聞者皆是如來音，",
        "from": "T32n1636_024:0139c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大音聲稱讚佛，　　及施鈴鐸諸音樂，",
        "from": "T32n1636_024:0139c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普使世間聞佛音，　　是故此光名妙音。",
        "from": "T32n1636_024:0139c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名甘露，　　此光開悟諸眾生，",
        "from": "T32n1636_024:0139c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令捨一切放逸行，　　具足脩習諸功德，",
        "from": "T32n1636_024:0139c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂有為法非安隱，　　無量苦惱悉充遍，",
        "from": "T32n1636_024:0139c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常樂稱揚寂滅樂，　　是故此光名甘露。",
        "from": "T32n1636_024:0139c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名最勝，　　此光開悟諸眾生，",
        "from": "T32n1636_024:0139c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令於佛所普聽聞，　　戒定智惠增上法，",
        "from": "T32n1636_024:0139c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常樂稱讚大牟尼，　　勝戒勝定及勝惠，",
        "from": "T32n1636_024:0139c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是為求無上道，　　是故此光名最勝。",
        "from": "T32n1636_024:0139c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名寶嚴，　　此光能覺諸群生，",
        "from": "T32n1636_024:0139c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得寶藏無窮盡，　　以此供養諸如來，",
        "from": "T32n1636_024:0139c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸種種上妙寶，　　奉施於佛及佛塔，",
        "from": "T32n1636_024:0139c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以惠施諸貧乏，　　是故得成此光明。",
        "from": "T32n1636_024:0140a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名香嚴，　　此光能覺諸眾生，",
        "from": "T32n1636_024:0140a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其聞者悅可意，　　決定當成佛功德，",
        "from": "T32n1636_024:0140a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人天妙香以塗飾，　　供養一切最勝主，",
        "from": "T32n1636_024:0140a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以造塔及佛像，　　是故得成此光明。",
        "from": "T32n1636_024:0140a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光名妙莊嚴，　　寶幢幡蓋無央數，",
        "from": "T32n1636_024:0140a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焚香散華奏眾樂，　　城邑內外皆充滿，",
        "from": "T32n1636_024:0140a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由以微妙伎樂音，　　眾香妙華幢蓋等，",
        "from": "T32n1636_024:0140a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種莊嚴供養佛，　　是故得成此光明。",
        "from": "T32n1636_024:0140a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名嚴淨，　　令地平坦猶如掌，",
        "from": "T32n1636_024:0140a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴佛塔及其處，　　是故得成此光明，",
        "from": "T32n1636_024:0140a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名大雲，　　而能密布雨香水，",
        "from": "T32n1636_024:0140a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由以香水灑佛塔，　　是故得成此光明。",
        "from": "T32n1636_024:0140a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名嚴具，　　令裸形者得上服，",
        "from": "T32n1636_024:0140a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴身妙物而為施，　　是故得成此光明，",
        "from": "T32n1636_024:0140a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名上味，　　能令飢者獲美食，",
        "from": "T32n1636_024:0140a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以眾珍饌而為施，　　是故得成此光明。",
        "from": "T32n1636_024:0140a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名勝財，　　令貧乏者獲寶藏，",
        "from": "T32n1636_024:0140a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無盡物施三寶，　　是故得成此光明，",
        "from": "T32n1636_024:0140a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨眼，　　能令盲者見眾色，",
        "from": "T32n1636_024:0140a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以燈施佛及佛塔，　　是故得成此光明。",
        "from": "T32n1636_024:0140a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨耳，　　能令聾者悉善聽，",
        "from": "T32n1636_024:0140a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作樂施佛及佛塔，　　是故得成此光明。",
        "from": "T32n1636_024:0140a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨鼻，　　昔未聞香皆得聞，",
        "from": "T32n1636_024:0140a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香施佛及佛塔，　　是故得成此光明。",
        "from": "T32n1636_024:0140a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨舌，　　能除麁惡不善語，",
        "from": "T32n1636_024:0140a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由以美音稱讚佛，　　是故得成此光明。",
        "from": "T32n1636_024:0140a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨身，　　令根缺者皆具足，",
        "from": "T32n1636_024:0140a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以身禮佛及佛塔，　　是故得成此光明。",
        "from": "T32n1636_024:0140a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨意，　　令失心者得正念，",
        "from": "T32n1636_024:0140b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由脩三昧自在力，　　是故得成此光明。",
        "from": "T32n1636_024:0140b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨色，　　難思妙相咸令覩，",
        "from": "T32n1636_024:0140b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙華供佛及佛塔，　　是故得成此光明。",
        "from": "T32n1636_024:0140b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨聲，　　觀聲緣起如谷響，",
        "from": "T32n1636_024:0140b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知聲性本來空，　　是故得成此光明。",
        "from": "T32n1636_024:0140b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨香，　　令諸臭穢悉香潔，",
        "from": "T32n1636_024:0140b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香水浴佛及佛塔，　　是故得成此光明。",
        "from": "T32n1636_024:0140b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨味，　　能除一切味中毒，",
        "from": "T32n1636_024:0140b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常供佛僧及父母，　　是故得成此光明。",
        "from": "T32n1636_024:0140b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨觸，　　能令硬觸皆柔軟，",
        "from": "T32n1636_024:0140b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戈鋋劍戟從空雨，　　皆令變作妙花鬘，",
        "from": "T32n1636_024:0140b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以昔曾於道路中，　　塗香散花布衣服，",
        "from": "T32n1636_024:0140b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎奉如來蹈其上，　　是故得成此光明。",
        "from": "T32n1636_024:0140b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明名淨法，　　能令身諸毛孔中，",
        "from": "T32n1636_024:0140b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉演難思妙法門，　　聽者咸欣蒙解脫，",
        "from": "T32n1636_024:0140b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性無生從緣起，　　法性常住等虛空，",
        "from": "T32n1636_024:0140b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知佛身即法身，　　是故得成此光明。",
        "from": "T32n1636_024:0140b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等比光明門，　　如微塵數無有量，",
        "from": "T32n1636_024:0140b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉從大仙毛孔出，　　所作事業各差別，",
        "from": "T32n1636_024:0140b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如一毛孔所放光，　　由若虛空微塵數，",
        "from": "T32n1636_024:0140b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切毛孔悉亦然，　　此是大仙三昧力。",
        "from": "T32n1636_024:0140b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼所脩諸功德，　　隨其宿緣同梵行，",
        "from": "T32n1636_024:0140b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今放光明故如是，　　此是大仙智自在。",
        "from": "T32n1636_024:0140b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往昔同脩勝福業，　　能生愛樂皆隨喜，",
        "from": "T32n1636_024:0140b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於今所作亦復然，　　是故得成此光明。",
        "from": "T32n1636_024:0140b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有自脩眾福業，　　數數供養於諸佛，",
        "from": "T32n1636_024:0140b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於佛德常勤求，　　由此光明所開覺。",
        "from": "T32n1636_024:0140b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如生盲不見日，　　非謂無日出世間，",
        "from": "T32n1636_024:0140b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有目者悉了知，　　各隨所務而脩作。",
        "from": "T32n1636_024:0140c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士光明亦如是，　　有智惠者皆悉見，",
        "from": "T32n1636_024:0140c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫邪信劣解人，　　於此光明莫能覩。",
        "from": "T32n1636_024:0140c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼宮殿及輦輿，　　妙寶靈香以塗瑩，",
        "from": "T32n1636_024:0140c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具有勝福咸自然，　　非無德者能安處。",
        "from": "T32n1636_024:0140c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士光明亦如是，　　有深智者咸蒙照，",
        "from": "T32n1636_024:0140c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪信劣解凡愚入，　　無有能得斯光矚。",
        "from": "T32n1636_024:0140c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聞此光差別，　　能生清淨深信解，",
        "from": "T32n1636_024:0140c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永斷一切諸疑網，　　速成無上功德幢。",
        "from": "T32n1636_024:0140c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復現最上三摩地，　　眷屬莊嚴皆自在，",
        "from": "T32n1636_024:0140c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方一切國土中，　　佛子眾會皆圍繞。",
        "from": "T32n1636_024:0140c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有妙蓮華光莊嚴，　　量等三千大千界，",
        "from": "T32n1636_024:0140c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身端坐悉充滿，　　現此三昧神通力。",
        "from": "T32n1636_024:0140c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有十剎微塵數，　　妙寶蓮華所嚴飾，",
        "from": "T32n1636_024:0140c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛子等住其中，　　是此三昧威神力。",
        "from": "T32n1636_024:0140c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿世成就善因緣，　　具足脩行佛功德，",
        "from": "T32n1636_024:0140c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾會所圍繞，　　悉共合掌觀無厭。",
        "from": "T32n1636_024:0140c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子身中入三昧，　　於盛年身從定起，",
        "from": "T32n1636_024:0140c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛年身中入三昧，　　於老年身從定起，",
        "from": "T32n1636_024:0140c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老年身中入三昧，　　近事女身從定起，",
        "from": "T32n1636_024:0140c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近事女身入三昧，　　近事男身從定起，",
        "from": "T32n1636_024:0140c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近事男身入三昧，　　比丘尼身從定起，",
        "from": "T32n1636_024:0140c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘尼身入三昧，　　於比丘身從定起，",
        "from": "T32n1636_024:0140c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘身中入三昧，　　學無學身從定起，",
        "from": "T32n1636_024:0140c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學無學身入三昧，　　於緣覺身從定起，",
        "from": "T32n1636_024:0140c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣覺身中入三昧，　　現如來身從定起，",
        "from": "T32n1636_024:0140c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來身中入三昧，　　於諸天身從定起，",
        "from": "T32n1636_024:0140c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天身中入三昧，　　於大龍身從定起，",
        "from": "T32n1636_024:0140c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大龍身中入三昧，　　於夜叉身從定起，",
        "from": "T32n1636_024:0140c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜叉身中入三昧，　　於部多身從定起，",
        "from": "T32n1636_024:0141a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "部多身中入三昧，　　一毛孔中從定起，",
        "from": "T32n1636_024:0141a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一毛孔中入三昧，　　一切毛孔從定起，",
        "from": "T32n1636_024:0141a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切毛孔入三昧，　　一毛端頭從定起，",
        "from": "T32n1636_024:0141a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一毛端頭入三昧，　　一切髮端從定起，",
        "from": "T32n1636_024:0141a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切髮端入三昧，　　一微塵中從定起，",
        "from": "T32n1636_024:0141a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一微塵中入三昧，　　於一切塵從定起，",
        "from": "T32n1636_024:0141a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切塵中入三昧，　　於金剛際從定起，",
        "from": "T32n1636_024:0141a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛際中入三昧，　　於摩尼寶從定起，",
        "from": "T32n1636_024:0141a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若摩尼寶入三昧，　　佛光明中從定起，",
        "from": "T32n1636_024:0141a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛光中入三昧，　　於水大中從定起，",
        "from": "T32n1636_024:0141a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若水大中入三昧，　　於火大中從定起，",
        "from": "T32n1636_024:0141a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若火大中入三昧，　　於風大中從定起，",
        "from": "T32n1636_024:0141a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若風大中入三昧，　　於地大中從定起，",
        "from": "T32n1636_024:0141a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若地大中入三昧，　　於天宮殿從定起，",
        "from": "T32n1636_024:0141a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天宮殿入三昧，　　於空起定心不亂，",
        "from": "T32n1636_024:0141a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名不思議解脫，　　自在功德三摩地。",
        "from": "T32n1636_024:0141a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方所有諸如來，　　於無量劫說不盡，",
        "from": "T32n1636_024:0141a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來共宣說，　　眾生業報龍變化。",
        "from": "T32n1636_024:0141a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛自在大神通，　　及入定力不思議，",
        "from": "T32n1636_024:0141a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞心住八解脫，　　能以一身現多身，",
        "from": "T32n1636_024:0141a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以多身為一身，　　於虛空中入火定，",
        "from": "T32n1636_024:0141a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼不具足大慈悲，　　不為眾生求佛道，",
        "from": "T32n1636_024:0141a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚能現此難思議，　　何況廣大饒益者。",
        "from": "T32n1636_024:0141a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如日月遊虛空，　　其光普遍十方處，",
        "from": "T32n1636_024:0141a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泉池陂澤器中水，　　眾寶河海靡不現。",
        "from": "T32n1636_024:0141a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩色像亦復然，　　十方普現不思議，",
        "from": "T32n1636_024:0141a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此皆三昧自在力，　　唯有如來能現證。",
        "from": "T32n1636_024:0141a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海中有神名善音，　　其音普順海眾生，",
        "from": "T32n1636_024:0141a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有語言皆辯了，　　令彼一切悉歡悅。",
        "from": "T32n1636_024:0141b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼神具有貪恚癡，　　猶能善解諸言說，",
        "from": "T32n1636_024:0141b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復總持自在力，　　而不能令眾歡喜？",
        "from": "T32n1636_024:0141b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如幻師善幻法，　　能現無邊巧事業，",
        "from": "T32n1636_024:0141b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾示作日月歲，　　城邑豐饒大安樂，",
        "from": "T32n1636_024:0141b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻師具有貪恚癡，　　猶能幻力悅世間，",
        "from": "T32n1636_024:0141b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復解脫諸禪定，　　而不能令眾歡喜？",
        "from": "T32n1636_024:0141b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅睺阿脩羅變現，　　蹈金剛際海中立，",
        "from": "T32n1636_024:0141b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海水雖深沒半身，　　首與須彌正齊等，",
        "from": "T32n1636_024:0141b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有貪欲瞋恚癡，　　尚能現此大神變，",
        "from": "T32n1636_024:0141b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復降魔照世燈，　　而無自在威神力？",
        "from": "T32n1636_024:0141b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天與脩羅鬪戰時，　　帝釋神力得自在，",
        "from": "T32n1636_024:0141b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其軍眾之數量，　　現身與等彼無敵，",
        "from": "T32n1636_024:0141b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸阿脩羅作是念，　　釋提桓因來向我，",
        "from": "T32n1636_024:0141b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必取我身五種縛，　　由是彼眾悉憂怖。",
        "from": "T32n1636_024:0141b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋現身有千眼，　　手執金剛出火焰，",
        "from": "T32n1636_024:0141b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被甲持杖具威嚴，　　脩羅遙見咸退伏。",
        "from": "T32n1636_024:0141b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼由微小福力故，　　猶能摧破大怨敵，",
        "from": "T32n1636_024:0141b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況救度一切者，　　豈於功德不自在？",
        "from": "T32n1636_024:0141b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如風興雲降大雨，　　亦能息滅諸雲氣，",
        "from": "T32n1636_024:0141b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能成熟諸苗稼，　　亦能安樂諸群生。",
        "from": "T32n1636_024:0141b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼不能學波羅蜜，　　亦不學佛諸功德，",
        "from": "T32n1636_024:0141b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶成不可思議事，　　何況具足諸願者？",
        "from": "T32n1636_024:0141b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」論曰：",
        "from": "T32n1636_024:0141b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩諸有所作，皆為利樂諸眾生故。",
        "from": "T32n1636_024:0141b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘別明增長福因，如《寶雲經》偈云：",
        "from": "T32n1636_024:0141b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸菩薩，　　嚴持香花，　　奉獻如來，",
        "from": "T32n1636_024:0141b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及佛塔廟，　　以此回向，　　願諸眾生，",
        "from": "T32n1636_024:0141b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離破戒垢，　　得佛戒香。",
        "from": "T32n1636_024:0141b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以淨香水，　　掃灑塗地，　　以此回向，",
        "from": "T32n1636_024:0141b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸眾生，　　離惡威儀，　　脩善法式，",
        "from": "T32n1636_024:0141c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "整肅圓滿。",
        "from": "T32n1636_024:0141c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以奉獻，　　以此回向，　　願諸眾生，",
        "from": "T32n1636_024:0141c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離煩惱熱。",
        "from": "T32n1636_024:0141c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生，　　入涅盤城　　出伽藍時，",
        "from": "T32n1636_024:0141c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發如是心，　　願令眾生，　　越生死獄。",
        "from": "T32n1636_024:0141c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若開戶牖，　　發如是心，　　願令眾生，",
        "from": "T32n1636_024:0141c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開聖智門。",
        "from": "T32n1636_024:0141c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若閉戶牖，　　發如是心，願令眾生，　　閉惡趣門。",
        "from": "T32n1636_024:0141c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若安坐時，發如是心，　　願令眾生，　　坐菩提場。",
        "from": "T32n1636_024:0141c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右脇臥時，　　發如是心，　　願令眾生，",
        "from": "T32n1636_024:0141c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住涅盤。",
        "from": "T32n1636_024:0141c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　從臥起時，　　發如是心，願令眾生，　　離纏蓋障。",
        "from": "T32n1636_024:0141c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若往便利，發如是心，　　願令眾生，　　趣大覺路。",
        "from": "T32n1636_024:0141c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正便利時，　　發如是心，　　願令眾生，",
        "from": "T32n1636_024:0141c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔三毒箭。",
        "from": "T32n1636_024:0141c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若洗淨時，　　發如是心，願令眾生，　　洗煩惱垢。",
        "from": "T32n1636_024:0141c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若洗手時，發如是心，　　願令眾生，　　離穢濁業。",
        "from": "T32n1636_024:0141c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若洗足時，　　發如是心，　　願令眾生，",
        "from": "T32n1636_024:0141c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離障塵坌。",
        "from": "T32n1636_024:0141c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　嚼齒木時，　　發如是心，願令眾生，　　捨諸垢染。",
        "from": "T32n1636_024:0141c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若身所作，　　一切善業，　　持以回向，",
        "from": "T32n1636_024:0141c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益安樂，　　一切眾生。",
        "from": "T32n1636_024:0141c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及佛塔廟，　　發如是心，　　願令眾生，",
        "from": "T32n1636_024:0141c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得人天，　　之所禮敬。",
        "from": "T32n1636_024:0141c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」大乘集菩薩學論卷第二十四",
        "from": "T32n1636_024:0141c26_100",
        "context_with_next_sentence": false
    }
]