{
    "T46n1923_001:0627c03_0": "諸法無諍三昧法門卷上",
    "T46n1923_001:0627c05_0": "陳南嶽思大禪師撰",
    "T46n1923_001:0627c06_0": "如萬行中說。",
    "T46n1923_001:0627c06_1": "從初發心至成佛道。",
    "T46n1923_001:0627c06_2": "一身一心一智慧。",
    "T46n1923_001:0627c07_3": "欲為教化眾生故。",
    "T46n1923_001:0627c07_4": "萬行名字差別異。",
    "T46n1923_001:0627c08_0": "夫欲學一切佛法。",
    "T46n1923_001:0627c08_1": "先持淨戒勤禪定。",
    "T46n1923_001:0627c08_2": "得一切佛法諸三昧門。",
    "T46n1923_001:0627c09_3": "百八三昧。",
    "T46n1923_001:0627c09_4": "五百陀羅尼。",
    "T46n1923_001:0627c09_5": "及諸解脫。",
    "T46n1923_001:0627c10_6": "大慈大悲。",
    "T46n1923_001:0627c10_7": "一切種智。",
    "T46n1923_001:0627c10_8": "五眼。",
    "T46n1923_001:0627c10_9": "六神通。",
    "T46n1923_001:0627c10_10": "三明。",
    "T46n1923_001:0627c11_11": "八解脫。",
    "T46n1923_001:0627c11_12": "十力。",
    "T46n1923_001:0627c11_13": "四無畏。",
    "T46n1923_001:0627c11_14": "十八不共法。",
    "T46n1923_001:0627c11_15": "三十二相。",
    "T46n1923_001:0627c12_16": "八十種好。",
    "T46n1923_001:0627c12_17": "六波羅蜜。",
    "T46n1923_001:0627c12_18": "三十七品。",
    "T46n1923_001:0627c12_19": "四弘大誓願。",
    "T46n1923_001:0627c13_20": "四無量心。",
    "T46n1923_001:0627c13_21": "如意神通。",
    "T46n1923_001:0627c13_22": "四攝法。",
    "T46n1923_001:0627c13_23": "如是無量佛法功德。",
    "T46n1923_001:0627c14_24": "一切皆從禪生。",
    "T46n1923_001:0627c14_25": "何以故。",
    "T46n1923_001:0627c14_26": "三世十方無量諸佛。",
    "T46n1923_001:0627c15_27": "若欲說法度眾生時。",
    "T46n1923_001:0627c15_28": "先入禪定。",
    "T46n1923_001:0627c15_29": "以十力道種智。",
    "T46n1923_001:0627c16_30": "觀察眾生根性差別。",
    "T46n1923_001:0627c16_31": "知其對治。",
    "T46n1923_001:0627c17_0": "得道因緣。",
    "T46n1923_001:0627c17_1": "以法眼觀察竟。",
    "T46n1923_001:0627c17_2": "以一切種智。",
    "T46n1923_001:0627c17_3": "說法度眾生。",
    "T46n1923_001:0627c18_4": "一切種智者。",
    "T46n1923_001:0627c18_5": "名為佛眼。",
    "T46n1923_001:0627c18_6": "亦名現一切色身三昧。",
    "T46n1923_001:0627c19_7": "亦名普現色身三昧。",
    "T46n1923_001:0627c19_8": "上作一切佛身。",
    "T46n1923_001:0627c20_9": "諸菩薩身。",
    "T46n1923_001:0627c20_10": "辟支佛身。",
    "T46n1923_001:0627c20_11": "阿羅漢身。",
    "T46n1923_001:0627c20_12": "諸天王身。",
    "T46n1923_001:0627c21_13": "轉輪聖帝諸小王身。",
    "T46n1923_001:0627c21_14": "下作三塗六趣眾生之身。",
    "T46n1923_001:0627c22_15": "如是一切佛身。",
    "T46n1923_001:0627c22_16": "一切眾生身。",
    "T46n1923_001:0627c22_17": "一念心中一時行。",
    "T46n1923_001:0627c23_18": "無前無後。",
    "T46n1923_001:0627c23_19": "亦無中間。",
    "T46n1923_001:0627c23_20": "一時說法度眾生。",
    "T46n1923_001:0627c24_21": "皆是禪波羅蜜功德所成。",
    "T46n1923_001:0627c24_22": "是故佛言。",
    "T46n1923_001:0627c24_23": "若不坐禪。",
    "T46n1923_001:0627c25_24": "平地顛墜。",
    "T46n1923_001:0627c25_25": "若欲斷煩惱。",
    "T46n1923_001:0627c25_26": "先以定動。",
    "T46n1923_001:0627c25_27": "然後智拔。",
    "T46n1923_001:0627c26_28": "定名奢摩他。",
    "T46n1923_001:0627c26_29": "智慧名毘婆舍那。",
    "T46n1923_001:0627c26_30": "定有無量。",
    "T46n1923_001:0627c27_31": "總說三種。",
    "T46n1923_001:0627c27_32": "下定名欲界定。",
    "T46n1923_001:0627c27_33": "中定名色界定。",
    "T46n1923_001:0627c28_0": "上定名無色界定。",
    "T46n1923_001:0627c28_1": "復次下定是聲聞定。",
    "T46n1923_001:0627c28_2": "總攬三界。",
    "T46n1923_001:0627c29_3": "中定是辟支佛定。",
    "T46n1923_001:0627c29_4": "上定是如來定。",
    "T46n1923_001:0627c29_5": "及諸菩薩定。",
    "T46n1923_001:0628a01_6": "智有無量說有三。",
    "T46n1923_001:0628a01_7": "一者道智。",
    "T46n1923_001:0628a01_8": "二者道種智。",
    "T46n1923_001:0628a02_9": "三者一切種智。",
    "T46n1923_001:0628a02_10": "慧亦有三。",
    "T46n1923_001:0628a02_11": "一者道慧。",
    "T46n1923_001:0628a02_12": "二者道種慧。",
    "T46n1923_001:0628a03_13": "三者一切種慧。",
    "T46n1923_001:0628a03_14": "復次分別說有十一智。",
    "T46n1923_001:0628a04_15": "何者是耶。",
    "T46n1923_001:0628a04_16": "法智。",
    "T46n1923_001:0628a04_17": "世智。",
    "T46n1923_001:0628a04_18": "他心智。",
    "T46n1923_001:0628a04_19": "宿命智。",
    "T46n1923_001:0628a05_0": "苦智。",
    "T46n1923_001:0628a05_1": "集智。",
    "T46n1923_001:0628a05_2": "滅智。",
    "T46n1923_001:0628a05_3": "道智。",
    "T46n1923_001:0628a05_4": "盡智。",
    "T46n1923_001:0628a05_5": "無生智。",
    "T46n1923_001:0628a05_6": "如實智。",
    "T46n1923_001:0628a06_0": "復次盡智無生智。",
    "T46n1923_001:0628a06_1": "分別則有十八種智。",
    "T46n1923_001:0628a06_2": "盡智有九。",
    "T46n1923_001:0628a07_3": "無生智有九。",
    "T46n1923_001:0628a07_4": "是名十八智。",
    "T46n1923_001:0628a07_5": "亦得名為十八心。",
    "T46n1923_001:0628a08_6": "三乘聖人共在四禪諸智慧中。",
    "T46n1923_001:0628a08_7": "問如實道如實智者。",
    "T46n1923_001:0628a09_8": "於一切法總相別相。",
    "T46n1923_001:0628a09_9": "如實能知故。",
    "T46n1923_001:0628a10_10": "名如實智。",
    "T46n1923_001:0628a10_11": "是諸智慧。",
    "T46n1923_001:0628a10_12": "即是一切智。",
    "T46n1923_001:0628a10_13": "亦名無智。",
    "T46n1923_001:0628a11_14": "何以故。",
    "T46n1923_001:0628a11_15": "如先尼梵志問佛。",
    "T46n1923_001:0628a11_16": "經中說。",
    "T46n1923_001:0628a11_17": "先尼梵志白佛言。",
    "T46n1923_001:0628a12_18": "世尊。",
    "T46n1923_001:0628a12_19": "如來一切智慧。",
    "T46n1923_001:0628a12_20": "從何處得。",
    "T46n1923_001:0628a13_0": "佛答先尼。",
    "T46n1923_001:0628a13_1": "無有得處。",
    "T46n1923_001:0628a13_2": "先尼復問。",
    "T46n1923_001:0628a13_3": "云何智慧無有得處佛復答言。",
    "T46n1923_001:0628a14_4": "非內觀中得是智慧。",
    "T46n1923_001:0628a14_5": "非外觀中得是智慧。",
    "T46n1923_001:0628a15_6": "非內外觀中得是智慧。",
    "T46n1923_001:0628a15_7": "亦非不觀得是智慧。",
    "T46n1923_001:0628a16_8": "是故智慧無有得處。",
    "T46n1923_001:0628a16_9": "故名無智。",
    "T46n1923_001:0628a17_10": "如奇特品說。",
    "T46n1923_001:0628a17_11": "一字入四十二字。",
    "T46n1923_001:0628a17_12": "四十二字還入一字。",
    "T46n1923_001:0628a18_13": "亦不見一字。",
    "T46n1923_001:0628a18_14": "唯佛與佛善知字法。",
    "T46n1923_001:0628a19_0": "善知無字法。",
    "T46n1923_001:0628a19_1": "為無字法故說於字法。",
    "T46n1923_001:0628a19_2": "不為字法故說於字法。",
    "T46n1923_001:0628a20_3": "是故四十二字。",
    "T46n1923_001:0628a20_4": "即是無字。",
    "T46n1923_001:0628a20_5": "復次欲坐禪時。",
    "T46n1923_001:0628a21_6": "應先觀身本。",
    "T46n1923_001:0628a21_7": "身本者如來藏也。",
    "T46n1923_001:0628a22_0": "亦名自性清淨心。",
    "T46n1923_001:0628a22_1": "是名真實心。",
    "T46n1923_001:0628a22_2": "不在內。",
    "T46n1923_001:0628a22_3": "不在外。",
    "T46n1923_001:0628a23_4": "不在中間。",
    "T46n1923_001:0628a23_5": "不斷不常。",
    "T46n1923_001:0628a23_6": "亦非中道。",
    "T46n1923_001:0628a23_7": "無名無字。",
    "T46n1923_001:0628a24_0": "無相貌。",
    "T46n1923_001:0628a24_1": "無自無他。",
    "T46n1923_001:0628a24_2": "無生無滅。",
    "T46n1923_001:0628a24_3": "無來無去。",
    "T46n1923_001:0628a24_4": "無住處。",
    "T46n1923_001:0628a25_5": "無愚無智。",
    "T46n1923_001:0628a25_6": "無縛無解。",
    "T46n1923_001:0628a25_7": "生死涅槃。",
    "T46n1923_001:0628a25_8": "無一二。",
    "T46n1923_001:0628a26_0": "無前無後。",
    "T46n1923_001:0628a26_1": "無中間。",
    "T46n1923_001:0628a26_2": "從昔已來無名字。",
    "T46n1923_001:0628a26_3": "如是觀察真身竟。",
    "T46n1923_001:0628a27_4": "次觀身身。",
    "T46n1923_001:0628a27_5": "復觀心身。",
    "T46n1923_001:0628a27_6": "身身者從妄念心生。",
    "T46n1923_001:0628a28_7": "隨業受報。",
    "T46n1923_001:0628a28_8": "天人諸趣。",
    "T46n1923_001:0628a28_9": "實無去來。",
    "T46n1923_001:0628a28_10": "妄見生滅。",
    "T46n1923_001:0628a29_11": "此事難知。",
    "T46n1923_001:0628a29_12": "當譬喻說。",
    "T46n1923_001:0628a29_13": "身本及真心。",
    "T46n1923_001:0628a29_14": "譬如虛空月。",
    "T46n1923_001:0628b01_15": "無初無後。",
    "T46n1923_001:0628b01_16": "無圓滿。",
    "T46n1923_001:0628b01_17": "無出無沒無去來。",
    "T46n1923_001:0628b02_0": "眾生妄見謂生滅。",
    "T46n1923_001:0628b02_1": "大海江河及陂池。",
    "T46n1923_001:0628b02_2": "溪潭渠浴及泉源。",
    "T46n1923_001:0628b03_3": "普現眾影似真月。",
    "T46n1923_001:0628b03_4": "身身心心如月影。",
    "T46n1923_001:0628b04_5": "觀身然欲甚相似。",
    "T46n1923_001:0628b04_6": "身本真偽亦如是。",
    "T46n1923_001:0628b04_7": "月在虛空無來去。",
    "T46n1923_001:0628b05_8": "凡夫妄見在眾水。",
    "T46n1923_001:0628b05_9": "雖無去來無生滅。",
    "T46n1923_001:0628b06_10": "與空中月甚相似。",
    "T46n1923_001:0628b06_11": "雖現六趣眾色像。",
    "T46n1923_001:0628b06_12": "如來藏身未曾異。",
    "T46n1923_001:0628b07_13": "譬如幻師著獸皮飛禽走獸種種像。",
    "T46n1923_001:0628b08_14": "貴賤男女差別異。",
    "T46n1923_001:0628b08_15": "端正醜陋及老少。",
    "T46n1923_001:0628b09_0": "世間種種可笑事。",
    "T46n1923_001:0628b09_1": "幻師雖作種種變。",
    "T46n1923_001:0628b09_2": "本丈夫形未曾異。",
    "T46n1923_001:0628b10_3": "凡夫雖受六趣色。",
    "T46n1923_001:0628b10_4": "如來藏色不變異。",
    "T46n1923_001:0628b11_5": "身本及真心。",
    "T46n1923_001:0628b11_6": "譬如幻師睡身心無思覺寂然不變易。",
    "T46n1923_001:0628b12_7": "身身及心數。",
    "T46n1923_001:0628b12_8": "如幻師遊戲故示六趣形種種可笑事。",
    "T46n1923_001:0628b13_9": "身身眾生體。",
    "T46n1923_001:0628b13_10": "難解譬喻說。",
    "T46n1923_001:0628b14_0": "如此法性無涅槃。",
    "T46n1923_001:0628b14_1": "亦無有生死。",
    "T46n1923_001:0628b14_2": "譬如眠熟時。",
    "T46n1923_001:0628b15_0": "夢見種種事。",
    "T46n1923_001:0628b15_1": "心體尚空無。",
    "T46n1923_001:0628b15_2": "何況有夢事。",
    "T46n1923_001:0628b15_3": "覺雖了了憶。",
    "T46n1923_001:0628b16_4": "實無有於此凡夫顛倒識。",
    "T46n1923_001:0628b16_5": "譬喻亦如是。",
    "T46n1923_001:0628b17_6": "禪定智慧能覺了。",
    "T46n1923_001:0628b17_7": "餘散心智不能解非。",
    "T46n1923_001:0628b17_8": "但凡夫如夢幻。",
    "T46n1923_001:0628b18_9": "月影現水種種事。",
    "T46n1923_001:0628b18_10": "復次諸佛菩薩聖皆爾。",
    "T46n1923_001:0628b19_11": "從初發心至佛果。",
    "T46n1923_001:0628b19_12": "持戒禪定種種事甚深定心不變易。",
    "T46n1923_001:0628b20_13": "智慧神通幻化異。",
    "T46n1923_001:0628b20_14": "法身不動。",
    "T46n1923_001:0628b21_15": "如空月普現色身作佛事。",
    "T46n1923_001:0628b21_16": "雖無去來無生滅。",
    "T46n1923_001:0628b22_17": "亦如月影現眾水。",
    "T46n1923_001:0628b22_18": "何以故。",
    "T46n1923_001:0628b22_19": "如經論中說。",
    "T46n1923_001:0628b23_0": "欲學一切智定。",
    "T46n1923_001:0628b23_1": "必修諸善心。",
    "T46n1923_001:0628b23_2": "若在定能知世間生滅法相。",
    "T46n1923_001:0628b24_3": "亦知出世三乘聖道。",
    "T46n1923_001:0628b24_4": "制心禪智。",
    "T46n1923_001:0628b25_0": "無事不辦。",
    "T46n1923_001:0628b25_1": "欲求佛道持淨戒。",
    "T46n1923_001:0628b25_2": "專修禪觀。",
    "T46n1923_001:0628b25_3": "得神通能降天魔。",
    "T46n1923_001:0628b26_4": "破外道。",
    "T46n1923_001:0628b26_5": "能度眾生斷煩惱。",
    "T46n1923_001:0628b26_6": "問曰。",
    "T46n1923_001:0628b27_0": "般若經中佛自說言。",
    "T46n1923_001:0628b27_1": "欲學聲聞。",
    "T46n1923_001:0628b27_2": "當學般若。",
    "T46n1923_001:0628b27_3": "欲學緣覺當學般若。",
    "T46n1923_001:0628b28_4": "欲學菩薩。",
    "T46n1923_001:0628b28_5": "當學般若。",
    "T46n1923_001:0628b28_6": "復次有六波羅蜜。",
    "T46n1923_001:0628b29_7": "般若為前導。",
    "T46n1923_001:0628b29_8": "亦是三世諸佛母。",
    "T46n1923_001:0628c01_0": "汝今云何。",
    "T46n1923_001:0628c01_1": "偏讚禪不讚五波羅蜜。",
    "T46n1923_001:0628c01_2": "復次如經中說。",
    "T46n1923_001:0628c02_3": "五度如盲。",
    "T46n1923_001:0628c02_4": "般若如眼。",
    "T46n1923_001:0628c02_5": "汝今云何。",
    "T46n1923_001:0628c02_6": "偏讚度不讚明眼。",
    "T46n1923_001:0628c03_7": "誰能信者願廣解說。",
    "T46n1923_001:0628c03_8": "除我等疑惑。",
    "T46n1923_001:0628c04_0": "答曰。",
    "T46n1923_001:0628c04_1": "諦聽善思念之。",
    "T46n1923_001:0628c04_2": "吾當為汝決定說。",
    "T46n1923_001:0628c05_0": "　三乘般若同一觀　　隨證淺深差別異　如大海水無增減　　隨取者器大小異　聲聞緣覺及菩薩　　如來智慧亦如是　十二因緣四種智　　下智聲聞中緣覺　巧慧上智名菩薩　　如來頓覺上上智　以無名法化眾生　　方便假名差別異　三乘智慧不能知　　唯佛世尊獨知耳　如大集經雜四諦　　三乘法行同一義　陳如稽首白世尊　　十方菩薩大眾集　云何名法行比丘　　願佛演說法行義　爾時佛告憍陳如　　至心諦聽今當說　若求法行諸比丘　　誦如來十二部經　謂修多羅及毘曇　　優婆提舍及毘尼　樂為四眾敷暢說　　是樂誦說非法行　若更復有諸比丘　　誦如來十二部經　能廣演說思惟義　　是樂思惟無法行　若復次有諸比丘　　更讀誦十二部經　演說思惟觀其義　　是名樂觀無法行　夫法行者三乘同　　一觀我今當說者　有比丘能觀身心　　心不貪著一切相　謙虛下意不生慢　　不以愛水洗業田　不於中種識種子　　滅覺觀法境界息　永離煩惱心寂靜　　比丘如是觀身心　佛說是人真法行　　如是比丘即能得　聲聞緣覺佛菩提　　法行比丘觀三事　觀身觀受及觀心　　比丘觀察三念已　一心四禪十八智　　復次大智論中說　聲聞緣覺及諸佛　　四禪二九十八智　同共證道明闇異　　共觀四諦十二緣　隨機感悟種種異　　聲聞四諦十六心　辟支獨覺無漏智　　菩薩亦解二乘法　獲得無礙十六諦　　如諸天共寶器食　飯色黑白各有異　　四諦譬喻如鐙品　定如淨油智如炷　　禪慧如大放光明　照物無二是般若　　鐙明本無差別照　覩者眼目明暗異　　禪定道品及六度　般若一法無有二　　覺道神通從禪發　隨機化俗差別異問曰。",
    "T46n1923_001:0629a14_1": "佛何經中說般若諸慧皆從禪定生。",
    "T46n1923_001:0629a14_2": "答曰。",
    "T46n1923_001:0629a15_3": "如禪定論中說。",
    "T46n1923_001:0629a15_4": "三乘一切智慧皆從禪生。",
    "T46n1923_001:0629a16_0": "般若論中。",
    "T46n1923_001:0629a16_1": "亦有此語。",
    "T46n1923_001:0629a16_2": "般若從禪生。",
    "T46n1923_001:0629a16_3": "汝無所知。",
    "T46n1923_001:0629a17_0": "不解佛語。",
    "T46n1923_001:0629a17_1": "而生疑惑。",
    "T46n1923_001:0629a17_2": "作是狂難。",
    "T46n1923_001:0629a17_3": "汝何不見。",
    "T46n1923_001:0629a17_4": "十方諸佛。",
    "T46n1923_001:0629a18_5": "若欲說法度眾生時。",
    "T46n1923_001:0629a18_6": "先入禪定。",
    "T46n1923_001:0629a18_7": "以神通力。",
    "T46n1923_001:0629a19_8": "能令大地十方世界。",
    "T46n1923_001:0629a19_9": "六種震動。",
    "T46n1923_001:0629a19_10": "三變土田。",
    "T46n1923_001:0629a20_11": "轉穢為淨。",
    "T46n1923_001:0629a20_12": "或至七變。",
    "T46n1923_001:0629a20_13": "能令一切未曾有事。",
    "T46n1923_001:0629a21_0": "悉具出現。",
    "T46n1923_001:0629a21_1": "悅可眾心。",
    "T46n1923_001:0629a21_2": "放大光明。",
    "T46n1923_001:0629a21_3": "普照十方。",
    "T46n1923_001:0629a21_4": "他方菩薩。",
    "T46n1923_001:0629a22_5": "悉來集會。",
    "T46n1923_001:0629a22_6": "復以五眼觀其性欲。",
    "T46n1923_001:0629a22_7": "然後說法。",
    "T46n1923_001:0629a23_8": "復次般若波羅蜜光明釋論中說。",
    "T46n1923_001:0629a23_9": "有人疑問佛。",
    "T46n1923_001:0629a24_10": "佛是一切智人。",
    "T46n1923_001:0629a24_11": "智慧自在。",
    "T46n1923_001:0629a24_12": "即應說法。",
    "T46n1923_001:0629a25_0": "何故先入禪定。",
    "T46n1923_001:0629a25_1": "然後說法。",
    "T46n1923_001:0629a25_2": "如不知相。",
    "T46n1923_001:0629a25_3": "論主答曰。",
    "T46n1923_001:0629a26_4": "言如來一切智慧。",
    "T46n1923_001:0629a26_5": "及大光明。",
    "T46n1923_001:0629a26_6": "大神通力。",
    "T46n1923_001:0629a27_0": "皆在禪定中得。",
    "T46n1923_001:0629a27_1": "佛今欲說摩訶般若大智慧法。",
    "T46n1923_001:0629a28_2": "先入禪定。",
    "T46n1923_001:0629a28_3": "現大神通。",
    "T46n1923_001:0629a28_4": "放大光明。",
    "T46n1923_001:0629a28_5": "遍照一切十方眾生。",
    "T46n1923_001:0629a29_6": "報禪定恩故。",
    "T46n1923_001:0629a29_7": "然後說法。",
    "T46n1923_001:0629a29_8": "為破外道執。",
    "T46n1923_001:0629b01_9": "外道六師。",
    "T46n1923_001:0629b01_10": "常作是言。",
    "T46n1923_001:0629b01_11": "我是等智慧。",
    "T46n1923_001:0629b01_12": "於一切常用常說。",
    "T46n1923_001:0629b02_13": "不須入禪定。",
    "T46n1923_001:0629b02_14": "佛為降伏如是邪見諸外道輩。",
    "T46n1923_001:0629b03_15": "先入禪定。",
    "T46n1923_001:0629b03_16": "然後說法。",
    "T46n1923_001:0629b03_17": "復次如勝定經中所說。",
    "T46n1923_001:0629b04_18": "若復有人。",
    "T46n1923_001:0629b04_19": "不須禪定。",
    "T46n1923_001:0629b04_20": "身不證法。",
    "T46n1923_001:0629b04_21": "散心讀誦十二部經。",
    "T46n1923_001:0629b05_22": "卷卷側滿。",
    "T46n1923_001:0629b05_23": "十方世界皆闇誦通利。",
    "T46n1923_001:0629b06_24": "復大精進。",
    "T46n1923_001:0629b06_25": "恒河沙劫。",
    "T46n1923_001:0629b06_26": "講說是經。",
    "T46n1923_001:0629b06_27": "不如一念思惟入定。",
    "T46n1923_001:0629b07_28": "何以故。",
    "T46n1923_001:0629b07_29": "但使發心欲坐禪者。",
    "T46n1923_001:0629b08_0": "雖未得禪定。",
    "T46n1923_001:0629b08_1": "已勝十方一切論師。",
    "T46n1923_001:0629b08_2": "何況得禪定。",
    "T46n1923_001:0629b09_3": "說是語時。",
    "T46n1923_001:0629b09_4": "五百論師來詣佛所。",
    "T46n1923_001:0629b09_5": "俱白佛言。",
    "T46n1923_001:0629b10_0": "我等多聞。",
    "T46n1923_001:0629b10_1": "總持十二部經。",
    "T46n1923_001:0629b10_2": "及韋陀論五部。",
    "T46n1923_001:0629b10_3": "毘尼講說無礙。",
    "T46n1923_001:0629b11_4": "十六大國。",
    "T46n1923_001:0629b11_5": "敬我如佛世尊。",
    "T46n1923_001:0629b11_6": "何故不讚我等多聞智慧。",
    "T46n1923_001:0629b12_7": "獨讚禪定。",
    "T46n1923_001:0629b12_8": "佛告諸論師。",
    "T46n1923_001:0629b13_0": "汝等心亂。",
    "T46n1923_001:0629b13_1": "假使多聞何所益也。",
    "T46n1923_001:0629b13_2": "汝欲與禪定角力。",
    "T46n1923_001:0629b14_3": "如盲眼人欲覩眾色。",
    "T46n1923_001:0629b14_4": "如無手足欲抱須彌山王。",
    "T46n1923_001:0629b15_5": "如折翅鳥欲飛騰虛空。",
    "T46n1923_001:0629b15_6": "如蚊子翅欲遮日月光。",
    "T46n1923_001:0629b16_7": "如無船舫人欲度大海。",
    "T46n1923_001:0629b16_8": "皆無是處。",
    "T46n1923_001:0629b17_0": "汝等論師。",
    "T46n1923_001:0629b17_1": "亦復如是。",
    "T46n1923_001:0629b17_2": "欲角量禪定。",
    "T46n1923_001:0629b17_3": "無有是處。",
    "T46n1923_001:0629b18_0": "復次毘婆沙中說。",
    "T46n1923_001:0629b18_1": "若有比丘。",
    "T46n1923_001:0629b18_2": "不肯坐禪。",
    "T46n1923_001:0629b18_3": "身不證法。",
    "T46n1923_001:0629b19_4": "散心讀誦。",
    "T46n1923_001:0629b19_5": "講說文字。",
    "T46n1923_001:0629b19_6": "辨說為能。",
    "T46n1923_001:0629b19_7": "不知詐言知。",
    "T46n1923_001:0629b20_8": "不解詐言解。",
    "T46n1923_001:0629b20_9": "不自覺知。",
    "T46n1923_001:0629b20_10": "高心輕慢坐禪之人。",
    "T46n1923_001:0629b21_11": "如是論師。",
    "T46n1923_001:0629b21_12": "死入地獄。",
    "T46n1923_001:0629b21_13": "吞熱鐵丸。",
    "T46n1923_001:0629b21_14": "出為飛鳥。",
    "T46n1923_001:0629b22_15": "猪羊畜獸。",
    "T46n1923_001:0629b22_16": "雞狗野干。",
    "T46n1923_001:0629b22_17": "狐狼等身。",
    "T46n1923_001:0629b22_18": "若復有人。",
    "T46n1923_001:0629b23_0": "不近善知識。",
    "T46n1923_001:0629b23_1": "雖復坐禪獲得四禪定。",
    "T46n1923_001:0629b23_2": "無有轉治。",
    "T46n1923_001:0629b24_3": "無方便智。",
    "T46n1923_001:0629b24_4": "不能斷煩惱。",
    "T46n1923_001:0629b24_5": "雖得寂靜之樂煩惱不起。",
    "T46n1923_001:0629b25_6": "獲四禪時。",
    "T46n1923_001:0629b25_7": "謂得寂滅涅槃之道。",
    "T46n1923_001:0629b25_8": "便作是念。",
    "T46n1923_001:0629b26_9": "我今已得阿羅漢果。",
    "T46n1923_001:0629b26_10": "更不復生。",
    "T46n1923_001:0629b26_11": "如此比丘。",
    "T46n1923_001:0629b27_12": "實不得道。",
    "T46n1923_001:0629b27_13": "不斷煩惱。",
    "T46n1923_001:0629b27_14": "但得似道禪定。",
    "T46n1923_001:0629b27_15": "不近善知識。",
    "T46n1923_001:0629b28_16": "無方便智。",
    "T46n1923_001:0629b28_17": "謂得實道。",
    "T46n1923_001:0629b28_18": "起增上慢。",
    "T46n1923_001:0629b28_19": "臨命終見受生處。",
    "T46n1923_001:0629b29_20": "即生疑悔。",
    "T46n1923_001:0629b29_21": "阿羅漢者更不復生。",
    "T46n1923_001:0629c01_22": "我今更生。",
    "T46n1923_001:0629c01_23": "當知諸佛誑惑於我。",
    "T46n1923_001:0629c01_24": "作是念時。",
    "T46n1923_001:0629c02_0": "即墜地獄。",
    "T46n1923_001:0629c02_1": "何況餘人不坐禪者。",
    "T46n1923_001:0629c02_2": "重宣此義。",
    "T46n1923_001:0629c02_3": "而說偈言。",
    "T46n1923_001:0629c04_0": "　欲自求度及眾生　　普遍十方行六度　先發無上菩提心　　修習忍辱堅持戒　晝夜六時勤懺悔　　發大慈悲平等心　不惜身命大精進　　欲求佛道持淨戒　專修禪智獲神通　　能降天魔破外道　能度眾生斷煩惱　　從初發心至成佛　一身一心一智慧　　為欲教化眾生故　萬行名字差別異　　欲覺一切諸佛法　持清淨戒修禪定　　捨諸名聞及利養　遠離憒鬧癡眷屬　　念十方佛常懺悔　不顧身命求佛道　　獲得百八三昧門　亦得五百陀羅尼　　及諸解脫大慈悲　五眼六通一切智　　亦得三明八解脫　具足十力四無畏　　三十二相八十好　三十七品具六度　　十八不共微妙法　視諸眾生如一子　　四弘誓願具四攝　四無量心道種智　　一切種智四如意　觀察眾生廣法施　　入四禪定放光明　遍照十方諸世界　　變穢為淨大震動　現諸奇特希有事　　十方菩薩悉集會　三界天王皆在此　　端坐瞻仰一心待　同聲三請願聞法　　從禪方便三昧起　為眾隨應演說法　　色身香聲種種別　禪定寂然心不異　　雖在座坐現法身　十方九道無不遍　　淨戒禪定三昧力　十方了了分明見　　應可度者如眼前　未可度者即不見　　如空月影現眾水　闇室深井即不現　　譬如幻師種種變　盲瞎之人則不見　　盲瞎睡重者不見　諸佛法身鏡亦爾　　三障眾生不能見　若無淨戒禪智慧　　如來藏身不可見　如金鑛中有真金　　因緣不具金不現　眾生雖有如來藏　　不修戒定則不見　淨戒禪智具六度　　清淨法身乃顯現　淨妙真金和水銀　　能塗世間種種像　如來藏金和禪定　　法身神通應現往　普告後世求道人　　不修戒定莫能強　無戒定智皆不應　　怱怱亂心講文字　死入地獄吞鐵丸　　出為畜生彌劫矣　如是眾生不自知　　自稱我有大智慧　輕毀一切坐禪人　　壞亂正法作魔事　假使講經恒沙劫　　都不曾識佛法義　如殺三千世界人　　及諸一切眾生類　高心謗禪壞亂眾　　其罪甚重過於此　譬如群賊劫牛乳　　高聲唱得醍醐味　不知鑽搖及熮煖　　亦失酪漿生熟酥　麁淺薄味尚都失　　醍醐上味在何處　不修禪智無法喜　　譬喻說言無婦女　不淨亂心執文字　　故言皮囊可盛貯　譬如盲狗咬草叢　　不見人及非人類　但聞風吹草鳴聲　　高聲叫言賊虎至　養一盲狗虎咬故　　舉世盲狗叫亂沸　其心散亂都不定　　覺觀心語亦如是　讚百千經心常亂　　如蛇吐毒與世諍　增見諸非毒轉盛　　自言壞常子難生　既見禪智法喜妻　　石女無兒難可生　解文字空不貪著　　若修定時解無生　禪智方便般若母　　巧慧方便以為父　禪智般若無著慧　　和合共生如來子　三乘聖種從是學　　故稱一切眾導師　淨戒禪智如大地　　能生萬物載群類　禪智神通巧方便　　能生三乘一切智　若能一念在禪定　　能報三世佛恩義　三世諸佛坐道場　　覺悟眾生皆由此　一切凡夫共一身　　一煩惱心一智慧　真如一像不變易　　善惡業影六道異　諸佛菩薩一法身　　亦同一心一智慧　一字萬行化眾生　　一聖假名四十二　凡聖色藏一而二　　方便道中凡聖二　色藏元象無一二　　唯佛與佛乃知此　我從無數十方佛　　聞此一字無量義　少行法師不能知　　文字論師不能解　若人不近善知識　　學得有漏似道禪　初禪謂得須陀洹　　四禪謂得阿羅漢　起增上慢諸漏盡　　謂言斷結不更生　臨命終時見生處　　即作是言佛欺我　阿羅漢者不更生　　我今云何更受生　身證不了尚如此　　何況散心著文字　不知詐知起我慢　　顛倒說法誑眾生　身不證法昇高座　　死入阿鼻大地獄　身證不了尚生疑　　何況不證盲心說　高心亂語謗諸佛　　受學之徒皆効此　從地獄出為畜生　　備作種種諸雜類　若人親近善知識　　證無漏禪乃明解　具足禪智多聞義　　如是導師可依止　禪定深隱難可知復次禪波羅蜜。",
    "T46n1923_001:0630c03_1": "有無量名字。",
    "T46n1923_001:0630c03_2": "為求佛道。",
    "T46n1923_001:0630c03_3": "修學甚深微妙禪定。",
    "T46n1923_001:0630c04_4": "身心得證。",
    "T46n1923_001:0630c04_5": "斷諸煩惱。",
    "T46n1923_001:0630c04_6": "得一切神通。",
    "T46n1923_001:0630c05_7": "立大誓願。",
    "T46n1923_001:0630c05_8": "度一切眾生。",
    "T46n1923_001:0630c05_9": "是乃名為禪波羅蜜。",
    "T46n1923_001:0630c06_10": "立大誓願故禪定轉名四弘。",
    "T46n1923_001:0630c06_11": "欲度眾生故。",
    "T46n1923_001:0630c07_12": "入深禪定。",
    "T46n1923_001:0630c07_13": "以道種智清淨法眼。",
    "T46n1923_001:0630c07_14": "觀察眾生是處非處十力智。",
    "T46n1923_001:0630c08_15": "爾時禪定轉名四無量心。",
    "T46n1923_001:0630c09_0": "慈悲愍眾生。",
    "T46n1923_001:0630c09_1": "拔苦與樂。",
    "T46n1923_001:0630c09_2": "離憎愛心。",
    "T46n1923_001:0630c09_3": "平等觀察。",
    "T46n1923_001:0630c10_0": "爾時禪定。",
    "T46n1923_001:0630c10_1": "轉名慈悲喜捨。",
    "T46n1923_001:0630c10_2": "既觀察已。",
    "T46n1923_001:0630c10_3": "與其同事。",
    "T46n1923_001:0630c11_4": "隨應說法。",
    "T46n1923_001:0630c11_5": "爾時禪定。",
    "T46n1923_001:0630c11_6": "轉名四攝法。",
    "T46n1923_001:0630c11_7": "布施。",
    "T46n1923_001:0630c12_0": "愛語。",
    "T46n1923_001:0630c12_1": "利益。",
    "T46n1923_001:0630c12_2": "同事。",
    "T46n1923_001:0630c12_3": "是名四攝法也。",
    "T46n1923_001:0630c12_4": "復次大慈大悲。",
    "T46n1923_001:0630c13_5": "現如意神通一切色身。",
    "T46n1923_001:0630c13_6": "以神通力入五欲中。",
    "T46n1923_001:0630c14_7": "遍行六趣。",
    "T46n1923_001:0630c14_8": "隨欲度眾生。",
    "T46n1923_001:0630c14_9": "爾時禪定。",
    "T46n1923_001:0630c14_10": "轉名神通波羅蜜。",
    "T46n1923_001:0630c15_11": "亦普現十方一切佛事。",
    "T46n1923_001:0630c15_12": "常在禪定寂然無念。",
    "T46n1923_001:0630c16_13": "復次深大慈悲憐憫眾生。",
    "T46n1923_001:0630c16_14": "上作十方一切佛身。",
    "T46n1923_001:0630c17_15": "緣覺聲聞一切色形。",
    "T46n1923_001:0630c17_16": "下作六趣眾生之身。",
    "T46n1923_001:0630c18_17": "如是一切佛身。",
    "T46n1923_001:0630c18_18": "一切眾生身。",
    "T46n1923_001:0630c18_19": "一念心中一時行。",
    "T46n1923_001:0630c19_20": "無前無後無中間。",
    "T46n1923_001:0630c19_21": "一時說法度眾生。",
    "T46n1923_001:0630c20_22": "爾時禪定及神通波羅蜜。",
    "T46n1923_001:0630c20_23": "轉名一切種智。",
    "T46n1923_001:0630c21_0": "亦名佛眼。",
    "T46n1923_001:0630c21_1": "復次菩薩摩訶薩。",
    "T46n1923_001:0630c21_2": "持戒清淨。",
    "T46n1923_001:0630c21_3": "深妙禪定。",
    "T46n1923_001:0630c22_4": "斷習氣故。",
    "T46n1923_001:0630c22_5": "遠離三世諸愛見故。",
    "T46n1923_001:0630c22_6": "爾時禪定。",
    "T46n1923_001:0630c23_7": "轉名十八不共法。",
    "T46n1923_001:0630c23_8": "復次菩薩摩訶薩。",
    "T46n1923_001:0630c23_9": "以三明智分別眾生。",
    "T46n1923_001:0630c24_10": "爾時禪定。",
    "T46n1923_001:0630c24_11": "轉名十力。",
    "T46n1923_001:0630c24_12": "善知是處及漏盡故。",
    "T46n1923_001:0630c25_13": "復次菩薩摩訶薩。",
    "T46n1923_001:0630c25_14": "色如受想行識如。",
    "T46n1923_001:0630c26_15": "觀一切法。",
    "T46n1923_001:0630c26_16": "始從初學終至成佛斷煩惱。",
    "T46n1923_001:0630c27_0": "及神通盡知十方世界名號。",
    "T46n1923_001:0630c27_1": "亦知三世諸佛名號。",
    "T46n1923_001:0630c28_2": "及知諸佛弟子名號。",
    "T46n1923_001:0630c28_3": "亦知一切眾生名號。",
    "T46n1923_001:0630c29_4": "及知眾生煩惱名號。",
    "T46n1923_001:0630c29_5": "解脫名號。",
    "T46n1923_001:0630c29_6": "一念一時知。",
    "T46n1923_001:0631a01_7": "及知宿命因緣之事。",
    "T46n1923_001:0631a01_8": "爾時禪定轉名十號也。",
    "T46n1923_001:0631a02_9": "復次菩薩摩訶薩。",
    "T46n1923_001:0631a02_10": "以諸法無所有性。",
    "T46n1923_001:0631a02_11": "一念一心具足萬行。",
    "T46n1923_001:0631a03_12": "巧方便慧。",
    "T46n1923_001:0631a03_13": "從初發心至成佛果。",
    "T46n1923_001:0631a04_14": "作大佛事。",
    "T46n1923_001:0631a04_15": "心無所著。",
    "T46n1923_001:0631a04_16": "總相智。",
    "T46n1923_001:0631a04_17": "別相智。",
    "T46n1923_001:0631a04_18": "辯說無礙。",
    "T46n1923_001:0631a05_19": "具足神通波羅蜜。",
    "T46n1923_001:0631a05_20": "供養十方一切佛。",
    "T46n1923_001:0631a06_0": "淨佛國土。",
    "T46n1923_001:0631a06_1": "教化眾生。",
    "T46n1923_001:0631a06_2": "爾時禪定。",
    "T46n1923_001:0631a06_3": "轉名般若波羅蜜。",
    "T46n1923_001:0631a07_4": "復次行者。",
    "T46n1923_001:0631a07_5": "為出世間故。",
    "T46n1923_001:0631a07_6": "三界九地名為八背捨。",
    "T46n1923_001:0631a08_7": "次第斷煩惱。",
    "T46n1923_001:0631a08_8": "欲界未到地禪及中間。",
    "T46n1923_001:0631a09_0": "二禪及四禪。",
    "T46n1923_001:0631a09_1": "空處及非有想。",
    "T46n1923_001:0631a09_2": "最後滅受想。",
    "T46n1923_001:0631a09_3": "於欲界中具五方便。",
    "T46n1923_001:0631a10_4": "一者發大善心。",
    "T46n1923_001:0631a10_5": "求佛道故。",
    "T46n1923_001:0631a11_0": "欲得禪定。",
    "T46n1923_001:0631a11_1": "名善欲心。",
    "T46n1923_001:0631a11_2": "是善欲心。",
    "T46n1923_001:0631a11_3": "能生一切佛法。",
    "T46n1923_001:0631a12_4": "能入一切禪定。",
    "T46n1923_001:0631a12_5": "能證一切解脫。",
    "T46n1923_001:0631a12_6": "起一切神通。",
    "T46n1923_001:0631a13_7": "分別欲界色界無色界。",
    "T46n1923_001:0631a13_8": "五陰三毒四大。",
    "T46n1923_001:0631a13_9": "十二入十八界。",
    "T46n1923_001:0631a14_10": "十二因緣。",
    "T46n1923_001:0631a14_11": "一切諸法無常變異。",
    "T46n1923_001:0631a15_0": "苦空無我。",
    "T46n1923_001:0631a15_1": "亦知諸法無生滅真實相。",
    "T46n1923_001:0631a15_2": "無名無字。",
    "T46n1923_001:0631a16_3": "無漏無為。",
    "T46n1923_001:0631a16_4": "無相無貌。",
    "T46n1923_001:0631a16_5": "覺了諸法。",
    "T46n1923_001:0631a16_6": "故名法智。",
    "T46n1923_001:0631a17_7": "未到初禪得金剛智。",
    "T46n1923_001:0631a17_8": "能斷煩惱證諸解脫。",
    "T46n1923_001:0631a18_0": "是名未到地。",
    "T46n1923_001:0631a18_1": "初欲界地及未到地。",
    "T46n1923_001:0631a18_2": "如是二地。",
    "T46n1923_001:0631a19_0": "是佛道初門。",
    "T46n1923_001:0631a19_1": "欲得禪定。",
    "T46n1923_001:0631a19_2": "是名欲心。",
    "T46n1923_001:0631a19_3": "復次初夜後夜。",
    "T46n1923_001:0631a20_4": "專精學禪。",
    "T46n1923_001:0631a20_5": "節食攝心。",
    "T46n1923_001:0631a20_6": "捨離眷屬。",
    "T46n1923_001:0631a20_7": "斷諸攀緣。",
    "T46n1923_001:0631a21_8": "是名精進。",
    "T46n1923_001:0631a21_9": "復次專念初禪樂。",
    "T46n1923_001:0631a21_10": "更無餘念。",
    "T46n1923_001:0631a22_0": "是名念心。",
    "T46n1923_001:0631a22_1": "復次巧慧籌量欲界五欲。",
    "T46n1923_001:0631a22_2": "欺誑不淨。",
    "T46n1923_001:0631a23_3": "是三惡道伴。",
    "T46n1923_001:0631a23_4": "初禪定樂。",
    "T46n1923_001:0631a23_5": "斷諸欺誑。",
    "T46n1923_001:0631a23_6": "得真智慧。",
    "T46n1923_001:0631a24_7": "是入涅槃伴。",
    "T46n1923_001:0631a24_8": "是籌量。",
    "T46n1923_001:0631a24_9": "是名巧慧心。",
    "T46n1923_001:0631a24_10": "復次專心一處。",
    "T46n1923_001:0631a25_11": "滅諸覺觀。",
    "T46n1923_001:0631a25_12": "境界都息。",
    "T46n1923_001:0631a25_13": "身心寂靜。",
    "T46n1923_001:0631a25_14": "是名一心。",
    "T46n1923_001:0631a26_15": "如是五方便。",
    "T46n1923_001:0631a26_16": "能斷五欲妖媚煩惱。",
    "T46n1923_001:0631a26_17": "滅除五蓋。",
    "T46n1923_001:0631a27_18": "有覺有觀。",
    "T46n1923_001:0631a27_19": "離生得喜樂入初禪。",
    "T46n1923_001:0631a27_20": "名初背捨得入二禪。",
    "T46n1923_001:0631a28_21": "名二背捨。",
    "T46n1923_001:0631a28_22": "入第三禪。",
    "T46n1923_001:0631a28_23": "名三背捨。",
    "T46n1923_001:0631a29_24": "喜樂心內清淨得四禪。",
    "T46n1923_001:0631a29_25": "名為入一切處。",
    "T46n1923_001:0631a29_26": "滅一切色相。",
    "T46n1923_001:0631b01_27": "捨第四禪。",
    "T46n1923_001:0631b01_28": "滅有對想。",
    "T46n1923_001:0631b01_29": "入無邊虛空處。",
    "T46n1923_001:0631b02_30": "名為空一切處。",
    "T46n1923_001:0631b02_31": "第四背捨虛空處定。",
    "T46n1923_001:0631b02_32": "得一切識處定。",
    "T46n1923_001:0631b03_33": "是名識一切處第五背捨。",
    "T46n1923_001:0631b03_34": "復次捨識處定。",
    "T46n1923_001:0631b04_35": "入無所有處定。",
    "T46n1923_001:0631b04_36": "是名第六背捨。",
    "T46n1923_001:0631b04_37": "捨無所有處定得入非有想非無想處定。",
    "T46n1923_001:0631b05_38": "生厭離心。",
    "T46n1923_001:0631b06_39": "是名第七背捨。",
    "T46n1923_001:0631b06_40": "捨非有想非無想處定。",
    "T46n1923_001:0631b06_41": "入滅定受想定。",
    "T46n1923_001:0631b07_42": "心無所著。",
    "T46n1923_001:0631b07_43": "是名第八背捨。",
    "T46n1923_001:0631b07_44": "爾時禪波羅蜜。",
    "T46n1923_001:0631b08_45": "轉名八背捨。",
    "T46n1923_001:0631b08_46": "復次自覺覺他。",
    "T46n1923_001:0631b08_47": "通達無礙。",
    "T46n1923_001:0631b09_48": "得三解脫。",
    "T46n1923_001:0631b09_49": "能破三界一切煩惱。",
    "T46n1923_001:0631b09_50": "爾時禪波羅蜜。",
    "T46n1923_001:0631b10_51": "轉名十一智。",
    "T46n1923_001:0631b10_52": "復次行者。",
    "T46n1923_001:0631b10_53": "總持旋陀羅尼。",
    "T46n1923_001:0631b11_54": "戒定慧三分。",
    "T46n1923_001:0631b11_55": "八聖道。",
    "T46n1923_001:0631b11_56": "破四顛倒獲四真諦。",
    "T46n1923_001:0631b12_0": "爾時禪波羅蜜。",
    "T46n1923_001:0631b12_1": "轉名三十七品。",
    "T46n1923_001:0631b12_2": "起一切神通。",
    "T46n1923_001:0631b13_0": "所謂四念處。",
    "T46n1923_001:0631b13_1": "四正勤。",
    "T46n1923_001:0631b13_2": "四如意足。",
    "T46n1923_001:0631b13_3": "五根五力。",
    "T46n1923_001:0631b13_4": "七覺分八聖道分。",
    "T46n1923_001:0631b14_5": "名為摩訶衍。",
    "T46n1923_001:0631b14_6": "如四念處品中說。",
    "T46n1923_001:0631b15_7": "轉一切智慧。",
    "T46n1923_001:0631b15_8": "以一神通。",
    "T46n1923_001:0631b15_9": "現一切神通。",
    "T46n1923_001:0631b15_10": "以一解脫。",
    "T46n1923_001:0631b16_11": "作一切解脫。",
    "T46n1923_001:0631b16_12": "轉一名字語句。",
    "T46n1923_001:0631b16_13": "入一切名字語句。",
    "T46n1923_001:0631b17_14": "如是一切名字語句。",
    "T46n1923_001:0631b17_15": "還入一名一字一語一句。",
    "T46n1923_001:0631b18_16": "平等不異。",
    "T46n1923_001:0631b18_17": "是四念處字等語等。",
    "T46n1923_001:0631b18_18": "諸字入門。",
    "T46n1923_001:0631b19_19": "一切佛法盡在其中。",
    "T46n1923_001:0631b19_20": "復次菩薩摩訶薩。",
    "T46n1923_001:0631b20_21": "欲教化眾生。",
    "T46n1923_001:0631b20_22": "令生清淨歡喜信心故。",
    "T46n1923_001:0631b20_23": "與一切聖人。",
    "T46n1923_001:0631b21_24": "建立一聖官階位次第。",
    "T46n1923_001:0631b21_25": "眾生之得大歡喜。",
    "T46n1923_001:0631b22_26": "決定無疑。",
    "T46n1923_001:0631b22_27": "爾時誓願勤修禪定。",
    "T46n1923_001:0631b22_28": "得六神通。",
    "T46n1923_001:0631b23_29": "作轉輪聖王。",
    "T46n1923_001:0631b23_30": "入五道中。",
    "T46n1923_001:0631b23_31": "飛行十方。",
    "T46n1923_001:0631b23_32": "廣行布施。",
    "T46n1923_001:0631b24_33": "須衣與衣。",
    "T46n1923_001:0631b24_34": "須食與食。",
    "T46n1923_001:0631b24_35": "金銀七寶。",
    "T46n1923_001:0631b24_36": "象馬車乘。",
    "T46n1923_001:0631b25_37": "樓櫓宮殿。",
    "T46n1923_001:0631b25_38": "房舍屋宅。",
    "T46n1923_001:0631b25_39": "五欲眾具。",
    "T46n1923_001:0631b25_40": "簫[竺-二+遂]箜篌。",
    "T46n1923_001:0631b26_41": "琴瑟鼓吹。",
    "T46n1923_001:0631b26_42": "隨眾生欲盡給與之。",
    "T46n1923_001:0631b26_43": "後為說法令其得道。",
    "T46n1923_001:0631b27_44": "雖作如是種種法施。",
    "T46n1923_001:0631b27_45": "實無施者。",
    "T46n1923_001:0631b27_46": "無財物。",
    "T46n1923_001:0631b28_47": "無說無示。",
    "T46n1923_001:0631b28_48": "無聽法者。",
    "T46n1923_001:0631b28_49": "譬如幻師幻作幻人。",
    "T46n1923_001:0631b29_50": "四衢道中化作高座。",
    "T46n1923_001:0631b29_51": "廣說三乘微妙聖法。",
    "T46n1923_001:0631c01_0": "又作四眾集共聽受。",
    "T46n1923_001:0631c01_1": "如是幻師所作幻事。",
    "T46n1923_001:0631c01_2": "無色無心。",
    "T46n1923_001:0631c02_3": "無示無聽。",
    "T46n1923_001:0631c02_4": "無受無聞。",
    "T46n1923_001:0631c02_5": "無得菩薩。",
    "T46n1923_001:0631c02_6": "爾時禪波羅蜜。",
    "T46n1923_001:0631c03_7": "轉名檀波羅蜜何以故。",
    "T46n1923_001:0631c03_8": "施人物時。",
    "T46n1923_001:0631c04_0": "雖知諸法無所有性。",
    "T46n1923_001:0631c04_1": "無施無受。",
    "T46n1923_001:0631c04_2": "無財物相。",
    "T46n1923_001:0631c05_0": "三事俱空。",
    "T46n1923_001:0631c05_1": "雖知空寂。",
    "T46n1923_001:0631c05_2": "勤行布施。",
    "T46n1923_001:0631c05_3": "復次菩薩摩訶薩。",
    "T46n1923_001:0631c06_4": "雖知諸法空罪相不可得。",
    "T46n1923_001:0631c06_5": "持戒破戒。",
    "T46n1923_001:0631c06_6": "如夢如幻。",
    "T46n1923_001:0631c07_7": "如影如化。",
    "T46n1923_001:0631c07_8": "如水中月。",
    "T46n1923_001:0631c07_9": "雖知諸法無生滅。",
    "T46n1923_001:0631c08_10": "堅持淨戒無毀缺。",
    "T46n1923_001:0631c08_11": "亦以戒法為他人說。",
    "T46n1923_001:0631c08_12": "若人惡心不受戒。",
    "T46n1923_001:0631c09_13": "化作禽獸行。",
    "T46n1923_001:0631c09_14": "禮儀人類。",
    "T46n1923_001:0631c09_15": "見此大羞辱。",
    "T46n1923_001:0631c10_16": "各發善心。",
    "T46n1923_001:0631c10_17": "堅持淨戒。",
    "T46n1923_001:0631c10_18": "發大誓願。",
    "T46n1923_001:0631c10_19": "遍十方不顧身命行戒施。",
    "T46n1923_001:0631c11_20": "常現六道種種形。",
    "T46n1923_001:0631c11_21": "廣說如來清淨戒。",
    "T46n1923_001:0631c12_22": "以宿命智觀察之。",
    "T46n1923_001:0631c12_23": "必令歡喜無瞋害。",
    "T46n1923_001:0631c13_24": "非但為說戒法。",
    "T46n1923_001:0631c13_25": "亦說攝根定共戒。",
    "T46n1923_001:0631c13_26": "道共戒。",
    "T46n1923_001:0631c14_27": "性寂戒。",
    "T46n1923_001:0631c14_28": "報寂戒。",
    "T46n1923_001:0631c14_29": "爾時禪波羅蜜。",
    "T46n1923_001:0631c14_30": "轉名尸波羅蜜。",
    "T46n1923_001:0631c15_31": "復次菩薩摩訶薩。",
    "T46n1923_001:0631c15_32": "行此財施法施戒施時。",
    "T46n1923_001:0631c16_33": "受者瞋恚來打罵。",
    "T46n1923_001:0631c16_34": "割截手足心不動。",
    "T46n1923_001:0631c16_35": "乃至失命心不悔。",
    "T46n1923_001:0631c17_36": "爾時禪定。",
    "T46n1923_001:0631c17_37": "轉名羼提波羅蜜。",
    "T46n1923_001:0631c17_38": "菩薩行是甚深禪定。",
    "T46n1923_001:0631c18_39": "於一切聖行。",
    "T46n1923_001:0631c18_40": "以法忍故。",
    "T46n1923_001:0631c18_41": "心無所著。",
    "T46n1923_001:0631c19_42": "禪定即是羼提波羅蜜。",
    "T46n1923_001:0631c19_43": "復次菩薩。",
    "T46n1923_001:0631c19_44": "學四念處時。",
    "T46n1923_001:0631c20_45": "獲得四禪。",
    "T46n1923_001:0631c20_46": "復作是念。",
    "T46n1923_001:0631c20_47": "我於身念處。",
    "T46n1923_001:0631c21_0": "未得如意神通。",
    "T46n1923_001:0631c21_1": "受念處未獲宿命神通。",
    "T46n1923_001:0631c21_2": "修心念處。",
    "T46n1923_001:0631c22_3": "未獲他心智。",
    "T46n1923_001:0631c22_4": "不知十方凡聖心故。",
    "T46n1923_001:0631c22_5": "修法念處時。",
    "T46n1923_001:0631c23_6": "如是思惟。",
    "T46n1923_001:0631c23_7": "我今未獲漏盡神通。",
    "T46n1923_001:0631c23_8": "修身念處。",
    "T46n1923_001:0631c24_9": "觀一切色。",
    "T46n1923_001:0631c24_10": "亦未得清淨天眼。",
    "T46n1923_001:0631c24_11": "於受念處。",
    "T46n1923_001:0631c25_0": "未證因緣業報垢淨神通。",
    "T46n1923_001:0631c25_1": "於心念處。",
    "T46n1923_001:0631c25_2": "未得眾生語言三昧。",
    "T46n1923_001:0631c26_3": "作是念已。",
    "T46n1923_001:0631c26_4": "勤精進求乃至成就。",
    "T46n1923_001:0631c27_0": "具六神通。",
    "T46n1923_001:0631c27_1": "爾時禪定。",
    "T46n1923_001:0631c27_2": "轉名精進毘梨耶波羅蜜。",
    "T46n1923_001:0631c28_3": "復次菩薩。",
    "T46n1923_001:0631c28_4": "為起神通故。",
    "T46n1923_001:0631c28_5": "修練禪定。",
    "T46n1923_001:0631c28_6": "從初禪次第。",
    "T46n1923_001:0631c29_7": "入二禪三禪四禪。",
    "T46n1923_001:0631c29_8": "四空定。",
    "T46n1923_001:0631c29_9": "乃至滅受想定。",
    "T46n1923_001:0632a01_10": "一心次第。",
    "T46n1923_001:0632a01_11": "入無雜念心。",
    "T46n1923_001:0632a01_12": "是時禪波羅蜜。",
    "T46n1923_001:0632a01_13": "轉名九次第定。",
    "T46n1923_001:0632a02_14": "復次菩薩。",
    "T46n1923_001:0632a02_15": "入初禪時。",
    "T46n1923_001:0632a02_16": "觀入出息。",
    "T46n1923_001:0632a03_0": "自見其身。",
    "T46n1923_001:0632a03_1": "皆悉空寂。",
    "T46n1923_001:0632a03_2": "遠離色相。",
    "T46n1923_001:0632a03_3": "獲得神通。",
    "T46n1923_001:0632a03_4": "乃至四禪。",
    "T46n1923_001:0632a04_5": "亦復如是。",
    "T46n1923_001:0632a04_6": "入初禪時。",
    "T46n1923_001:0632a04_7": "觀入出息。",
    "T46n1923_001:0632a04_8": "見三世色。",
    "T46n1923_001:0632a05_9": "乃至微細。",
    "T46n1923_001:0632a05_10": "如微塵許。",
    "T46n1923_001:0632a05_11": "悉見無礙。",
    "T46n1923_001:0632a05_12": "亦見眾生出沒果報差別。",
    "T46n1923_001:0632a06_13": "於無量劫通達無礙。",
    "T46n1923_001:0632a06_14": "是名天眼神通乃至四禪。",
    "T46n1923_001:0632a07_15": "亦復如是。",
    "T46n1923_001:0632a07_16": "入初禪時。",
    "T46n1923_001:0632a07_17": "觀息出入。",
    "T46n1923_001:0632a08_18": "以次第觀聲。",
    "T46n1923_001:0632a08_19": "悉同十方凡聖音聲。",
    "T46n1923_001:0632a08_20": "是名天耳神通。",
    "T46n1923_001:0632a09_21": "乃至四禪。",
    "T46n1923_001:0632a09_22": "亦復如是。",
    "T46n1923_001:0632a09_23": "入初禪時。",
    "T46n1923_001:0632a10_0": "觀入出息住息住舍摩他。",
    "T46n1923_001:0632a10_1": "觀色相貌。",
    "T46n1923_001:0632a10_2": "以毘婆舍那。",
    "T46n1923_001:0632a11_3": "觀他心相。",
    "T46n1923_001:0632a11_4": "善知十方凡聖之心。",
    "T46n1923_001:0632a11_5": "是名他心智神通。",
    "T46n1923_001:0632a12_6": "乃至四禪。",
    "T46n1923_001:0632a12_7": "亦復如是。",
    "T46n1923_001:0632a12_8": "入初禪時。",
    "T46n1923_001:0632a12_9": "觀息入出。",
    "T46n1923_001:0632a13_10": "獲得眼通。",
    "T46n1923_001:0632a13_11": "得眼通已。",
    "T46n1923_001:0632a13_12": "觀於有歌羅邏時五陰生滅。",
    "T46n1923_001:0632a14_13": "乃至無量劫中五陰生滅。",
    "T46n1923_001:0632a14_14": "獲得宿命。",
    "T46n1923_001:0632a15_15": "是名宿命神通。",
    "T46n1923_001:0632a15_16": "乃至四禪。",
    "T46n1923_001:0632a15_17": "亦復如是。",
    "T46n1923_001:0632a15_18": "悉能觀察一切眾生。",
    "T46n1923_001:0632a16_19": "善惡業行差別不同。",
    "T46n1923_001:0632a16_20": "亦復知其發心早晚。",
    "T46n1923_001:0632a17_21": "入道遠近。",
    "T46n1923_001:0632a17_22": "十方三世通達無礙。",
    "T46n1923_001:0632a18_23": "是名道種智慧神通。",
    "T46n1923_001:0632a18_24": "爾時禪定轉名師子奮迅三昧。",
    "T46n1923_001:0632a19_25": "以神通力。",
    "T46n1923_001:0632a19_26": "供養十方佛。",
    "T46n1923_001:0632a19_27": "及教化眾生。",
    "T46n1923_001:0632a20_28": "淨佛國土。",
    "T46n1923_001:0632a20_29": "邊際智滿十地具足。",
    "T46n1923_001:0632a20_30": "變身如佛滿十方。",
    "T46n1923_001:0632a21_31": "學佛神通。",
    "T46n1923_001:0632a21_32": "未得滿足。",
    "T46n1923_001:0632a21_33": "是師子奮迅三昧。",
    "T46n1923_001:0632a22_34": "唯有諸佛。",
    "T46n1923_001:0632a22_35": "乃能具足。",
    "T46n1923_001:0632a22_36": "復次菩薩。",
    "T46n1923_001:0632a22_37": "入重玄門修四十心。",
    "T46n1923_001:0632a23_38": "從凡夫地初發心時。",
    "T46n1923_001:0632a23_39": "所修禪定。",
    "T46n1923_001:0632a24_0": "次第重入。",
    "T46n1923_001:0632a24_1": "乃至最後無垢地。",
    "T46n1923_001:0632a24_2": "修諸禪定。",
    "T46n1923_001:0632a24_3": "學佛神通化眾生法。",
    "T46n1923_001:0632a25_4": "從初禪入乃至滅受想定。",
    "T46n1923_001:0632a25_5": "三禪四禪四空。",
    "T46n1923_001:0632a26_6": "亦復如是。",
    "T46n1923_001:0632a26_7": "是名順超無礙。",
    "T46n1923_001:0632a26_8": "從滅受想定超住散心中。",
    "T46n1923_001:0632a27_9": "超入初禪。",
    "T46n1923_001:0632a27_10": "非有想非無想處無所有處。",
    "T46n1923_001:0632a28_11": "識處空處。",
    "T46n1923_001:0632a28_12": "四禪乃至二禪。",
    "T46n1923_001:0632a28_13": "亦復如是。",
    "T46n1923_001:0632a29_14": "是名逆超自在無礙。",
    "T46n1923_001:0632a29_15": "爾時禪定。",
    "T46n1923_001:0632a29_16": "轉名超越三昧。",
    "T46n1923_001:0632b01_17": "修佛神通。",
    "T46n1923_001:0632b01_18": "得佛智慧。",
    "T46n1923_001:0632b01_19": "餘五波羅蜜。",
    "T46n1923_001:0632b02_0": "亦復如是。",
    "T46n1923_001:0632b02_1": "是少一波羅蜜。",
    "T46n1923_001:0632b02_2": "不名五波羅蜜復次學禪定時。",
    "T46n1923_001:0632b03_3": "修四念處。",
    "T46n1923_001:0632b03_4": "於欲界中。",
    "T46n1923_001:0632b03_5": "觀內外色。",
    "T46n1923_001:0632b04_0": "入初背捨。",
    "T46n1923_001:0632b04_1": "具足聞慧。",
    "T46n1923_001:0632b04_2": "觀內外假二相不可得故。",
    "T46n1923_001:0632b05_3": "亦非是一如。",
    "T46n1923_001:0632b05_4": "如性故一解脫。",
    "T46n1923_001:0632b05_5": "復次思慧具足。",
    "T46n1923_001:0632b06_6": "觀察內外法。",
    "T46n1923_001:0632b06_7": "內外一切法。",
    "T46n1923_001:0632b06_8": "總相別相異相。",
    "T46n1923_001:0632b07_0": "不可得如如。",
    "T46n1923_001:0632b07_1": "故二解脫。",
    "T46n1923_001:0632b07_2": "復次修慧。",
    "T46n1923_001:0632b07_3": "六觀具足。",
    "T46n1923_001:0632b08_0": "色界五陰空。",
    "T46n1923_001:0632b08_1": "三解脫。",
    "T46n1923_001:0632b08_2": "復次聞慧修慧。",
    "T46n1923_001:0632b08_3": "用巧方便金剛智。",
    "T46n1923_001:0632b09_4": "破四空定。",
    "T46n1923_001:0632b09_5": "無貪著心。",
    "T46n1923_001:0632b09_6": "空五陰不可得故。",
    "T46n1923_001:0632b10_7": "得解脫空處。",
    "T46n1923_001:0632b10_8": "得解脫識處。",
    "T46n1923_001:0632b10_9": "得解脫無所有處。",
    "T46n1923_001:0632b11_10": "得解脫非有想非非想處。",
    "T46n1923_001:0632b11_11": "得解脫觀滅受想定。",
    "T46n1923_001:0632b12_12": "不可得故。",
    "T46n1923_001:0632b12_13": "得是解脫。",
    "T46n1923_001:0632b12_14": "是名八解脫。",
    "T46n1923_001:0632b12_15": "如如性故。",
    "T46n1923_001:0632b13_16": "無縛無脫。",
    "T46n1923_001:0632b13_17": "菩薩爾時。",
    "T46n1923_001:0632b13_18": "禪波羅蜜名八解脫。",
    "T46n1923_001:0632b14_19": "復次菩薩禪定。",
    "T46n1923_001:0632b14_20": "修四念處。",
    "T46n1923_001:0632b14_21": "得三十七品。",
    "T46n1923_001:0632b15_0": "具足佛法。",
    "T46n1923_001:0632b15_1": "何以故。",
    "T46n1923_001:0632b15_2": "是身念處。",
    "T46n1923_001:0632b15_3": "觀色法故。",
    "T46n1923_001:0632b15_4": "一念具足四念處故。",
    "T46n1923_001:0632b16_5": "是身念處。",
    "T46n1923_001:0632b16_6": "用念覺分。",
    "T46n1923_001:0632b16_7": "觀五陰時。",
    "T46n1923_001:0632b17_8": "能斷一切煩惱。",
    "T46n1923_001:0632b17_9": "故觀色陰時。",
    "T46n1923_001:0632b17_10": "是身念處。",
    "T46n1923_001:0632b17_11": "不淨觀九想。",
    "T46n1923_001:0632b18_12": "具足舍摩他。",
    "T46n1923_001:0632b18_13": "能破一切煩惱。",
    "T46n1923_001:0632b18_14": "是名為定。",
    "T46n1923_001:0632b19_15": "如論偈中說。",
    "T46n1923_001:0632b20_0": "　初觀身念念　　繫縛心令定",
    "T46n1923_001:0632b21_0": "　亦繫縛識定　　及除煩惱怨",
    "T46n1923_001:0632b22_0": "九想舍摩他。",
    "T46n1923_001:0632b22_1": "欲界金剛定。",
    "T46n1923_001:0632b22_2": "能破五欲如縛賊。",
    "T46n1923_001:0632b23_0": "十想毘婆舍那。",
    "T46n1923_001:0632b23_1": "欲界未到地金剛智。",
    "T46n1923_001:0632b23_2": "能觀五陰。",
    "T46n1923_001:0632b24_3": "畢竟盡想。",
    "T46n1923_001:0632b24_4": "不能更生。",
    "T46n1923_001:0632b24_5": "得盡智無生智。",
    "T46n1923_001:0632b24_6": "斷一切煩惱。",
    "T46n1923_001:0632b25_7": "如意利刀。",
    "T46n1923_001:0632b25_8": "斬斷賊頭。",
    "T46n1923_001:0632b25_9": "觀色如受想行識如。",
    "T46n1923_001:0632b26_10": "深觀五陰如如性故。",
    "T46n1923_001:0632b26_11": "即無煩惱可斷。",
    "T46n1923_001:0632b26_12": "亦無解脫涅槃可證。",
    "T46n1923_001:0632b27_13": "何以故。",
    "T46n1923_001:0632b27_14": "色即是空。",
    "T46n1923_001:0632b27_15": "空即是色。",
    "T46n1923_001:0632b28_16": "受想行識即是空。",
    "T46n1923_001:0632b28_17": "空即是受想行識。",
    "T46n1923_001:0632b28_18": "空即是涅槃。",
    "T46n1923_001:0632b29_19": "涅槃即是空。",
    "T46n1923_001:0632b29_20": "煩惱即是空。",
    "T46n1923_001:0632b29_21": "空即是煩惱。",
    "T46n1923_001:0632c01_22": "智慧即是空。",
    "T46n1923_001:0632c01_23": "空即是智慧。",
    "T46n1923_001:0632c01_24": "不可以虛空斷虛空。",
    "T46n1923_001:0632c02_25": "不可以虛空證虛空。",
    "T46n1923_001:0632c02_26": "如論偈說。",
    "T46n1923_001:0632c03_0": "　觀身不淨相　　真如性常定",
    "T46n1923_001:0632c04_0": "　諸受及以心　　法亦如是觀",
    "T46n1923_001:0632c05_0": "煩惱者六欲心也初死想。",
    "T46n1923_001:0632c05_1": "能斷威儀語言欲。",
    "T46n1923_001:0632c06_0": "膨脹想壞想散想。",
    "T46n1923_001:0632c06_1": "能斷形容欲。",
    "T46n1923_001:0632c06_2": "青瘀血塗想膿爛想。",
    "T46n1923_001:0632c07_3": "能斷色欲。",
    "T46n1923_001:0632c07_4": "骨想燒想。",
    "T46n1923_001:0632c07_5": "能斷細滑欲。",
    "T46n1923_001:0632c08_0": "散想滅盡想。",
    "T46n1923_001:0632c08_1": "能斷人欲。",
    "T46n1923_001:0632c08_2": "如論中說。",
    "T46n1923_001:0632c09_0": "　四蛇同一篋　　六賊同一村",
    "T46n1923_001:0632c10_0": "　及王旃陀羅　　分自守根門",
    "T46n1923_001:0632c11_0": "　六欲妖媚起　　愛怨詐為親",
    "T46n1923_001:0632c12_0": "　聲香味觸法　　六情起諸塵",
    "T46n1923_001:0632c13_0": "　貪欲如猛火　　瞋恚如蛇蚖",
    "T46n1923_001:0632c14_0": "　愚癡覆心眼　　智者當善觀",
    "T46n1923_001:0632c15_0": "　外想三四塊　　身器二六城",
    "T46n1923_001:0632c16_0": "　中含十二穢　　九孔惡露盈",
    "T46n1923_001:0632c17_0": "　癰疽蟲血雜　　膨脹臭爛膿",
    "T46n1923_001:0632c18_0": "　骨鎖分離斷　　六欲失姿容",
    "T46n1923_001:0632c19_0": "　九想觀成時　　六賊漸已除",
    "T46n1923_001:0632c20_0": "　及識愛怨詐　　兼知假實虛",
    "T46n1923_001:0632c21_0": "　四大共相依　　緣習成假名",
    "T46n1923_001:0632c22_0": "　行者諦觀察　　但見骨人形",
    "T46n1923_001:0632c23_0": "　初觀如珂許　　後漸滿一城",
    "T46n1923_001:0632c24_0": "　骨人遍法界　　深生憂厭道",
    "T46n1923_001:0632c25_0": "　從生至老死　　老死復有生",
    "T46n1923_001:0632c26_0": "　轉輪十二緣　　生死如循環",
    "T46n1923_001:0632c27_0": "　三塗苦難忍　　人天亦復然",
    "T46n1923_001:0632c28_0": "　誰聞六道苦　　而不興厭心",
    "T46n1923_001:0632c29_0": "　妄識本無體　　依因寂法生",
    "T46n1923_001:0633a01_0": "　妄想生妄想　　轉輪十二緣",
    "T46n1923_001:0633a02_0": "　知過二業患　　現不造三因",
    "T46n1923_001:0633a03_0": "　老死更不續　　反流盡生源",
    "T46n1923_001:0633a04_0": "諸法無諍三昧法門卷上"
}