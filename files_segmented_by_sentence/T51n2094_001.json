{
    "T51n2094_001:1024a16_0": "梁京寺記",
    "T51n2094_001:1024a18_0": "闕名",
    "T51n2094_001:1024a19_0": "小莊嚴寺",
    "T51n2094_001:1024a20_0": "梁小莊嚴寺。",
    "T51n2094_001:1024a20_1": "在建業定陰里。",
    "T51n2094_001:1024a20_2": "本是晉零陵王廟地。",
    "T51n2094_001:1024a21_3": "天監六年度禪師起造。",
    "T51n2094_001:1024a21_4": "時有邵文立者。",
    "T51n2094_001:1024a22_0": "世以烹屠為業。",
    "T51n2094_001:1024a22_1": "嘗欲殺一鹿。",
    "T51n2094_001:1024a22_2": "鹿跪而流淚。",
    "T51n2094_001:1024a22_3": "以為不祥。",
    "T51n2094_001:1024a23_4": "鹿懷一麑。",
    "T51n2094_001:1024a23_5": "尋當產育。",
    "T51n2094_001:1024a23_6": "就庖哀切。",
    "T51n2094_001:1024a23_7": "同被刳割。",
    "T51n2094_001:1024a24_8": "因斯患疾。",
    "T51n2094_001:1024a24_9": "眉鬚皆落。",
    "T51n2094_001:1024a24_10": "身瘡並壞。",
    "T51n2094_001:1024a24_11": "後乃深起悔責求道。",
    "T51n2094_001:1024a25_12": "度禪師發大誓願。",
    "T51n2094_001:1024a25_13": "罄捨家資迴買此地。",
    "T51n2094_001:1024a26_14": "為立伽藍。",
    "T51n2094_001:1024a27_0": "同泰寺",
    "T51n2094_001:1024a28_0": "梁武帝改年號大同。",
    "T51n2094_001:1024a28_1": "起同泰寺。",
    "T51n2094_001:1024a28_2": "在臺城內。",
    "T51n2094_001:1024a28_3": "窮竭帑藏。",
    "T51n2094_001:1024a29_4": "造大佛閣七層。",
    "T51n2094_001:1024a29_5": "為火所焚。",
    "T51n2094_001:1024a29_6": "武帝捨身施財。",
    "T51n2094_001:1024b01_7": "以祈佛福。",
    "T51n2094_001:1024b01_8": "自大通以後。",
    "T51n2094_001:1024b01_9": "無年不幸。",
    "T51n2094_001:1024b02_0": "興國禪寺",
    "T51n2094_001:1024b03_0": "梁武帝天監十三年。",
    "T51n2094_001:1024b03_1": "以錢二十萬。",
    "T51n2094_001:1024b03_2": "易定林前前岡獨龍阜。",
    "T51n2094_001:1024b04_3": "以葬誌公。",
    "T51n2094_001:1024b04_4": "永定公主以湯沐之資。",
    "T51n2094_001:1024b05_5": "造浮圖五級於其上。",
    "T51n2094_001:1024b05_6": "十四年。",
    "T51n2094_001:1024b05_7": "即塔前建開善寺。",
    "T51n2094_001:1024b07_0": "昇元寺",
    "T51n2094_001:1024b08_0": "昇元寺即瓦棺寺也。",
    "T51n2094_001:1024b08_1": "在城西隅瞰江面。",
    "T51n2094_001:1024b08_2": "後踞崇岡最為古跡。",
    "T51n2094_001:1024b09_3": "累經兵火。",
    "T51n2094_001:1024b09_4": "略無彷彿。",
    "T51n2094_001:1024b09_5": "李王時昇元閣猶在。",
    "T51n2094_001:1024b10_6": "乃梁朝故物。",
    "T51n2094_001:1024b11_0": "大愛敬寺",
    "T51n2094_001:1024b12_0": "梁武帝普通元年造。",
    "T51n2094_001:1024b12_1": "在蔣山之北高峯上。",
    "T51n2094_001:1024b13_0": "法寶寺",
    "T51n2094_001:1024b14_0": "梁同泰寺基之半也。",
    "T51n2094_001:1024b14_1": "建康剎錄。",
    "T51n2094_001:1024b14_2": "梁武帝大通元年。",
    "T51n2094_001:1024b15_3": "創同泰寺。",
    "T51n2094_001:1024b15_4": "寺處宮後。",
    "T51n2094_001:1024b15_5": "別開一門。",
    "T51n2094_001:1024b15_6": "名大通門。",
    "T51n2094_001:1024b16_7": "帝晨夕講議。",
    "T51n2094_001:1024b16_8": "多遊此門。",
    "T51n2094_001:1024b17_0": "法光寺",
    "T51n2094_001:1024b18_0": "即梁之蕭帝寺。",
    "T51n2094_001:1024b18_1": "舊傳。",
    "T51n2094_001:1024b18_2": "天監十三年造。",
    "T51n2094_001:1024b18_3": "元絳寺記云。",
    "T51n2094_001:1024b19_4": "不知從昔之名。",
    "T51n2094_001:1024b19_5": "故後人以帝氏目之。",
    "T51n2094_001:1024b20_0": "寶林寺",
    "T51n2094_001:1024b21_0": "梁天監中。",
    "T51n2094_001:1024b21_1": "武帝與寶公。",
    "T51n2094_001:1024b21_2": "同遊此山。",
    "T51n2094_001:1024b21_3": "見林巒殊勝。",
    "T51n2094_001:1024b22_4": "命建精藍。",
    "T51n2094_001:1024b23_0": "長于寺",
    "T51n2094_001:1024b24_0": "建康南五里有山岡。",
    "T51n2094_001:1024b24_1": "其間平地。",
    "T51n2094_001:1024b24_2": "庶民雜居。",
    "T51n2094_001:1024b24_3": "有大長于．小長于．東長于．並是地名。",
    "T51n2094_001:1024b25_4": "小長于在瓦棺寺南。",
    "T51n2094_001:1024b26_5": "巷西頭出大江。",
    "T51n2094_001:1024b26_6": "梁初起長于寺。"
}