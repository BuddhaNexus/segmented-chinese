[
    {
        "source_sentence": "釋迦文尼佛金剛一乘修行儀",
        "from": "T19n0938_001:0086c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軌法品一卷",
        "from": "T19n0938_001:0086c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命大智海毘盧遮那如來祕密主金剛手大",
        "from": "T19n0938_001:0086c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩。",
        "from": "T19n0938_001:0086c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我善無畏蒙佛聖旨。",
        "from": "T19n0938_001:0086c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竊案梵本聊得修三密門祕密軌則。",
        "from": "T19n0938_001:0086c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以今說釋迦世尊修瑜伽行。",
        "from": "T19n0938_001:0086c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲修此法者先發無上正真之心。",
        "from": "T19n0938_001:0086c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身著忍辱聖衣。",
        "from": "T19n0938_001:0086c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口常讀誦􆿅􄕻􅝝如是三密相應不違。",
        "from": "T19n0938_001:0086c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後往詣瑜伽阿闍梨所。",
        "from": "T19n0938_001:0086c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受祕密儀持念修行速得成就。",
        "from": "T19n0938_001:0086c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那言。",
        "from": "T19n0938_001:0086c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼阿闍梨。",
        "from": "T19n0938_001:0086c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見眾生堪為法器遠離諸垢有大信解勤勇深信常念利他。",
        "from": "T19n0938_001:0086c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若弟子具如是相貌者。",
        "from": "T19n0938_001:0086c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨應自往勸發之。",
        "from": "T19n0938_001:0086c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有二種弟子。",
        "from": "T19n0938_001:0086c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者已發菩提心。",
        "from": "T19n0938_001:0086c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師往弟子所而勸進。",
        "from": "T19n0938_001:0086c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者未發菩提心。",
        "from": "T19n0938_001:0086c28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子往師所而勸進。",
        "from": "T19n0938_001:0086c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中有智最為殊勝。",
        "from": "T19n0938_001:0086c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是知已乃可傳受。",
        "from": "T19n0938_001:0087a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手菩薩白毘盧遮那佛言。",
        "from": "T19n0938_001:0087a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見佛色身戴大寶冠。",
        "from": "T19n0938_001:0087a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冠中現五佛標非因非果。",
        "from": "T19n0938_001:0087a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處大月輪住於虛空常寂光處。",
        "from": "T19n0938_001:0087a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒說金剛祕密之教。",
        "from": "T19n0938_001:0087a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞緣覺所不能知。",
        "from": "T19n0938_001:0087a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或居蓮華臺上現報佛身。",
        "from": "T19n0938_001:0087a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更說金剛一乘法界唯心無上祕法。",
        "from": "T19n0938_001:0087a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等依內證之德常見常聞。",
        "from": "T19n0938_001:0087a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯諸新發者迷惑不解。",
        "from": "T19n0938_001:0087a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊隨眾生意。",
        "from": "T19n0938_001:0087a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作利益。",
        "from": "T19n0938_001:0087a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛若許可。",
        "from": "T19n0938_001:0087a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲宣說如來應現釋迦牟曩曳法。",
        "from": "T19n0938_001:0087a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸愚人得佛慧故。",
        "from": "T19n0938_001:0087a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來隨機說法聞方便慧。",
        "from": "T19n0938_001:0087a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生示真實相悟金剛乘入阿字門。",
        "from": "T19n0938_001:0087a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是語已。",
        "from": "T19n0938_001:0087a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那言。",
        "from": "T19n0938_001:0087a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉普賢能知我心。",
        "from": "T19n0938_001:0087a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我生悅。",
        "from": "T19n0938_001:0087a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於昔時修三密門證執金剛。",
        "from": "T19n0938_001:0087a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃坐金剛妙菩提座。",
        "from": "T19n0938_001:0087a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏眾魔成等正覺。",
        "from": "T19n0938_001:0087a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是以來經於多世。",
        "from": "T19n0938_001:0087a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而諸眾生由宿福故。",
        "from": "T19n0938_001:0087a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖會我所隨機得見。",
        "from": "T19n0938_001:0087a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任根得聞如汝見我。",
        "from": "T19n0938_001:0087a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於色界頂第四靜慮成等正覺。",
        "from": "T19n0938_001:0087a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即下蘇彌盧頂。",
        "from": "T19n0938_001:0087a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛大因陀羅壇。",
        "from": "T19n0938_001:0087a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來請我轉法四種輪。",
        "from": "T19n0938_001:0087a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一輪中各有三十七聖者。",
        "from": "T19n0938_001:0087a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住非愍三昧降眾天魔令入正見。",
        "from": "T19n0938_001:0087a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今正是時。",
        "from": "T19n0938_001:0087a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更欲演說大乘無上祕法。",
        "from": "T19n0938_001:0087a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後當歸圓寂之道。",
        "from": "T19n0938_001:0087a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來祕密神通之力。",
        "from": "T19n0938_001:0087a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無智人中勿妄宣傳我今聽許。",
        "from": "T19n0938_001:0087a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜應速說我之應形隨類之法。",
        "from": "T19n0938_001:0087a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝依真實法儀。",
        "from": "T19n0938_001:0087a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應說應祕。",
        "from": "T19n0938_001:0087a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是語已寂然而坐。",
        "from": "T19n0938_001:0087a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時金剛手。",
        "from": "T19n0938_001:0087a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心懷踊躍。",
        "from": "T19n0938_001:0087a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃現眾前而說是法。",
        "from": "T19n0938_001:0087a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲報無上世尊恩德者。",
        "from": "T19n0938_001:0087a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作曼荼羅。",
        "from": "T19n0938_001:0087a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中央畫釋迦牟曩像。",
        "from": "T19n0938_001:0087a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金色之身具四八相。",
        "from": "T19n0938_001:0087a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被服袈裟應身說法相。",
        "from": "T19n0938_001:0087a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智手吉祥印。",
        "from": "T19n0938_001:0087a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理手向上置智前。",
        "from": "T19n0938_001:0087a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於白蓮花臺結跏趺坐。",
        "from": "T19n0938_001:0087a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢文殊觀音彌勒住於四隅。",
        "from": "T19n0938_001:0087a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如胎藏說。",
        "from": "T19n0938_001:0087a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各坐蓮花半跏而居。",
        "from": "T19n0938_001:0087b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛前有如來鉢。",
        "from": "T19n0938_001:0087b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛右邊有賢瓶含花。",
        "from": "T19n0938_001:0087b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛後有錫杖。",
        "from": "T19n0938_001:0087b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛左邊有寶螺。",
        "from": "T19n0938_001:0087b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各安蓮葉上光炎圍繞。",
        "from": "T19n0938_001:0087b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫曼荼羅已。",
        "from": "T19n0938_001:0087b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於空閑寂寞仙人得道所。",
        "from": "T19n0938_001:0087b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或淨室或舍利塔前或山頂樹下。",
        "from": "T19n0938_001:0087b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在一處安置曼荼羅。",
        "from": "T19n0938_001:0087b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次設壇場莊嚴供具。",
        "from": "T19n0938_001:0087b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂塗香時花燒香飲食燈明及與閼伽香水以為六種。",
        "from": "T19n0938_001:0087b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有智慧以理為供。",
        "from": "T19n0938_001:0087b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜三時澡浴身體。",
        "from": "T19n0938_001:0087b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或觀理以真實明灑頂為水。",
        "from": "T19n0938_001:0087b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每到道場時作禮。",
        "from": "T19n0938_001:0087b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮有三種。",
        "from": "T19n0938_001:0087b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者音禮。",
        "from": "T19n0938_001:0087b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者心禮。",
        "from": "T19n0938_001:0087b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者身禮。",
        "from": "T19n0938_001:0087b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則三業禮拜也。",
        "from": "T19n0938_001:0087b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行若住若坐若臥。",
        "from": "T19n0938_001:0087b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱南謨字是為音禮。",
        "from": "T19n0938_001:0087b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於恒時雖不出音。",
        "from": "T19n0938_001:0087b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸唯心中觀世尊德。",
        "from": "T19n0938_001:0087b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜歸命是為心禮。",
        "from": "T19n0938_001:0087b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復五輪著地額二手二膝也神心迴轉故名為輪或作合掌低頭是為身禮。",
        "from": "T19n0938_001:0087b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮者要不須身投地。",
        "from": "T19n0938_001:0087b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但歸敬為禮。",
        "from": "T19n0938_001:0087b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以稽吾上頭。",
        "from": "T19n0938_001:0087b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而觸世尊之下足故名稽首。",
        "from": "T19n0938_001:0087b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次懺悔罪障事理二懺。",
        "from": "T19n0938_001:0087b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次隨喜聖凡德。",
        "from": "T19n0938_001:0087b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次請佛住世。",
        "from": "T19n0938_001:0087b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次迴向發願然後廣陳供養。",
        "from": "T19n0938_001:0087b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作念誦轉大乘經隨意作之。",
        "from": "T19n0938_001:0087b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若住此法所須皆成。",
        "from": "T19n0938_001:0087b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不轉此身見佛色身。",
        "from": "T19n0938_001:0087b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生世世離諸惡趣。",
        "from": "T19n0938_001:0087b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得興法利生之德。",
        "from": "T19n0938_001:0087b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾證無上正等菩提。",
        "from": "T19n0938_001:0087b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨根得成。",
        "from": "T19n0938_001:0087b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求仙果。",
        "from": "T19n0938_001:0087b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛現瞿曇仙。",
        "from": "T19n0938_001:0087b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為說法。",
        "from": "T19n0938_001:0087b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求大乘。",
        "from": "T19n0938_001:0087b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢現身。",
        "from": "T19n0938_001:0087b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為說法。",
        "from": "T19n0938_001:0087b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸漸誘彼令入佛道。",
        "from": "T19n0938_001:0087b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說手印　如來鉢印。",
        "from": "T19n0938_001:0087b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以右手當心仰掌。",
        "from": "T19n0938_001:0087b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以左手掌覆合右手掌上。",
        "from": "T19n0938_001:0087b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其左小指頭與右大指頭相拄。",
        "from": "T19n0938_001:0087b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其左大指頭與右小指頭相拄印呪曰。",
        "from": "T19n0938_001:0087b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三曼多勃馱南唵路迦播羅地恥多馱羅野馱羅野藥可反摩訶那皤引嚩勃馱播怛羅二合莎訶是法印呪具大精進。",
        "from": "T19n0938_001:0087c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常為一切如來神力而加護之。",
        "from": "T19n0938_001:0087c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當結是印并誦此呪一遍。",
        "from": "T19n0938_001:0087c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終稱憶地獄餓鬼有情滿百八遍。",
        "from": "T19n0938_001:0087c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則得地獄一切餓鬼飽食諸食。",
        "from": "T19n0938_001:0087c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若曠野行亦結此印并誦是呪。",
        "from": "T19n0938_001:0087c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則得曠野一切鬼神不相嬈。",
        "from": "T19n0938_001:0087c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲飛鉢亦用此印呪也。",
        "from": "T19n0938_001:0087c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次如來甘露印。",
        "from": "T19n0938_001:0087c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手大母指。",
        "from": "T19n0938_001:0087c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫押頭指中指無名指小指甲。",
        "from": "T19n0938_001:0087c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪曰歸命如前。",
        "from": "T19n0938_001:0087c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵印倪魚枳反𩕳部哆得賀反𩕳莎訶是印呪。",
        "from": "T19n0938_001:0087c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令持者證甘露法大解脫門。",
        "from": "T19n0938_001:0087c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次如來錫杖印。",
        "from": "T19n0938_001:0087c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以右手大母指。",
        "from": "T19n0938_001:0087c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫屈入掌。",
        "from": "T19n0938_001:0087c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以頭指無名指小指。",
        "from": "T19n0938_001:0087c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急握作拳屈肘掌當前平申。",
        "from": "T19n0938_001:0087c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其左手把袈裟角。",
        "from": "T19n0938_001:0087c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出頭四寸。",
        "from": "T19n0938_001:0087c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦屈肘當前平申。",
        "from": "T19n0938_001:0087c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪曰歸命如前。",
        "from": "T19n0938_001:0087c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵度那奴箇反諮馱羅拏吽是法呪。",
        "from": "T19n0938_001:0087c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善根成就慈願圓滿。",
        "from": "T19n0938_001:0087c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遇諸惡一切有情。",
        "from": "T19n0938_001:0087c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則結是印用擁護身。",
        "from": "T19n0938_001:0087c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次大法螺真言印。",
        "from": "T19n0938_001:0087c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧虛心合掌屈風空交。",
        "from": "T19n0938_001:0087c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪曰歸命如前。",
        "from": "T19n0938_001:0087c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暗近口吹之。",
        "from": "T19n0938_001:0087c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如吹螺之狀左右旋轉次根本毘盧遮那化身印。",
        "from": "T19n0938_001:0087c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定手水空相捻。",
        "from": "T19n0938_001:0087c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧手亦爾。",
        "from": "T19n0938_001:0087c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手水空共相著。",
        "from": "T19n0938_001:0087c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘地火風三指散竪。",
        "from": "T19n0938_001:0087c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦文佛真言曰。",
        "from": "T19n0938_001:0087c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫糝曼多沒馱引喃婆薩縛吃里二合捨涅素娜曩薩嚩達磨嚩無鉢反始多鉢羅二合鉢哆誐誐曩三摩三摩娑嚩二合賀引以是真言專注念誦讚應身曰。",
        "from": "T19n0938_001:0088a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩每迦旨囉娑哆擗曩𩕳素多曩娑怛鑁三合一跛曬迦賀娑多二合鼻里二合俱胝二合穆佉髻迦羅引乞懺二合二若悉底哩野四合地尾罽引爾娜縛哩鉢羅底僧娑覩二合多引娑怛鑁三合阿引哩摘曩麼儞野二合阿者攞制吒去南引弭地焰去供養儀式勸請奉送。",
        "from": "T19n0938_001:0088a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆依如來部應修之。",
        "from": "T19n0938_001:0088a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蘇悉地等說。",
        "from": "T19n0938_001:0088a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛眼尊為部母。",
        "from": "T19n0938_001:0088a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以難勝忿怒為結護明王又名無能勝如是勸修然後出道場。",
        "from": "T19n0938_001:0088a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉誦大乘心常繫一實境。",
        "from": "T19n0938_001:0088a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有間斷是法易成也。",
        "from": "T19n0938_001:0088a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟曩曳微妙金剛乘法說已竟。",
        "from": "T19n0938_001:0088a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦文佛法一卷",
        "from": "T19n0938_001:0088a15_100",
        "context_with_next_sentence": false
    }
]