{
    "X85n1590_003:0131c09_0": "錦江禪燈卷第三",
    "X85n1590_003:0131c11_0": "昭覺丈雪　通醉　輯",
    "X85n1590_003:0131c12_0": "紹興幻菴　胡昇猷　訂",
    "X85n1590_003:0131c13_0": "　　大鑒下第八世",
    "X85n1590_003:0131c14_0": "　　　雲門偃法嗣",
    "X85n1590_003:0131c15_0": "興元府普通封禪師僧問。",
    "X85n1590_003:0131c15_1": "今日一會何似靈山。",
    "X85n1590_003:0131c15_2": "師曰。",
    "X85n1590_003:0131c16_0": "震動乾坤。",
    "X85n1590_003:0131c16_1": "問如何是普通境。",
    "X85n1590_003:0131c16_2": "師曰。",
    "X85n1590_003:0131c16_3": "庭前有竹三冬秀。",
    "X85n1590_003:0131c17_0": "戶內無燈午夜明。",
    "X85n1590_003:0131c18_0": "益州鐵幢覺禪師僧問。",
    "X85n1590_003:0131c18_1": "十二時中如何履踐。",
    "X85n1590_003:0131c18_2": "師曰。",
    "X85n1590_003:0131c18_3": "光剃頭淨洗鉢。",
    "X85n1590_003:0131c19_4": "問如何是道。",
    "X85n1590_003:0131c19_5": "師曰踏著。",
    "X85n1590_003:0131c19_6": "曰如何是道中人。",
    "X85n1590_003:0131c20_7": "師曰。",
    "X85n1590_003:0131c20_8": "退後三步。",
    "X85n1590_003:0131c20_9": "問諸佛出世當為何事。",
    "X85n1590_003:0131c20_10": "師曰。",
    "X85n1590_003:0131c20_11": "截耳臥街。",
    "X85n1590_003:0131c22_0": "眉州福化充禪師僧問。",
    "X85n1590_003:0131c22_1": "如何是大人相。",
    "X85n1590_003:0131c22_2": "師曰。",
    "X85n1590_003:0131c22_3": "山僧者裏不曾容易對闍黎。",
    "X85n1590_003:0131c23_4": "曰如何得相承去。",
    "X85n1590_003:0131c23_5": "師曰。",
    "X85n1590_003:0131c23_6": "白雲雖有影。",
    "X85n1590_003:0131c24_7": "綠竹且無陰。",
    "X85n1590_003:0131c24_8": "問天皇也恁麼道。",
    "X85n1590_003:0131c24_9": "龍潭也恁麼道。",
    "X85n1590_003:0132a01_0": "未審和尚作麼生道。",
    "X85n1590_003:0132a01_1": "師曰。",
    "X85n1590_003:0132a01_2": "汝試道看。",
    "X85n1590_003:0132a01_3": "曰比來請益。",
    "X85n1590_003:0132a01_4": "豈無方便。",
    "X85n1590_003:0132a02_5": "師曰。",
    "X85n1590_003:0132a02_6": "將謂是海東舶主。",
    "X85n1590_003:0132a02_7": "元來是北地番人。",
    "X85n1590_003:0132a02_8": "問如何是佛法大意。",
    "X85n1590_003:0132a03_9": "師曰。",
    "X85n1590_003:0132a03_10": "十字路頭華表柱。",
    "X85n1590_003:0132a03_11": "曰學人不會。",
    "X85n1590_003:0132a04_12": "乞師再指。",
    "X85n1590_003:0132a04_13": "師曰。",
    "X85n1590_003:0132a04_14": "君自行東我向西。",
    "X85n1590_003:0132a05_0": "眉州黃龍贊禪師僧問。",
    "X85n1590_003:0132a05_1": "如何是和尚關棙子。",
    "X85n1590_003:0132a05_2": "師曰。",
    "X85n1590_003:0132a05_3": "少人踏得著。",
    "X85n1590_003:0132a06_4": "曰忽踏得著時如何。",
    "X85n1590_003:0132a06_5": "師曰。",
    "X85n1590_003:0132a06_6": "汝試進前看。",
    "X85n1590_003:0132a06_7": "僧便喝。",
    "X85n1590_003:0132a07_8": "師便打。",
    "X85n1590_003:0132a07_9": "問僧。",
    "X85n1590_003:0132a07_10": "近離甚處。",
    "X85n1590_003:0132a07_11": "曰香林。",
    "X85n1590_003:0132a07_12": "師曰。",
    "X85n1590_003:0132a07_13": "在彼多少時。",
    "X85n1590_003:0132a08_14": "曰六年。",
    "X85n1590_003:0132a08_15": "師曰。",
    "X85n1590_003:0132a08_16": "世尊在雪山六年。",
    "X85n1590_003:0132a08_17": "證無上菩提。",
    "X85n1590_003:0132a08_18": "汝在香林六年。",
    "X85n1590_003:0132a09_19": "成得個甚麼。",
    "X85n1590_003:0132a09_20": "僧無語。",
    "X85n1590_003:0132a09_21": "師曰。",
    "X85n1590_003:0132a09_22": "移廚喫飯漢。",
    "X85n1590_003:0132a10_0": "鹿門真法嗣",
    "X85n1590_003:0132a11_0": "益州崇真禪師僧問。",
    "X85n1590_003:0132a11_1": "如何是禪。",
    "X85n1590_003:0132a11_2": "師曰。",
    "X85n1590_003:0132a11_3": "澄潭釣玉兔。",
    "X85n1590_003:0132a11_4": "曰如何是道。",
    "X85n1590_003:0132a12_5": "師曰。",
    "X85n1590_003:0132a12_6": "拍手笑清風。",
    "X85n1590_003:0132a12_7": "問如何是大人相。",
    "X85n1590_003:0132a12_8": "師曰。",
    "X85n1590_003:0132a13_0": "泥揑三官土地堂。",
    "X85n1590_003:0132a14_0": "曹山霞法嗣",
    "X85n1590_003:0132a15_0": "嘉州東汀和尚僧問。",
    "X85n1590_003:0132a15_1": "如何是向去底人。",
    "X85n1590_003:0132a15_2": "師曰。",
    "X85n1590_003:0132a15_3": "石女紡麻縷。",
    "X85n1590_003:0132a16_4": "曰如何是却來底人。",
    "X85n1590_003:0132a16_5": "師曰。",
    "X85n1590_003:0132a16_6": "扇車關捩斷。",
    "X85n1590_003:0132a16_7": "問徧界是佛身。",
    "X85n1590_003:0132a17_8": "教某甲甚麼處立。",
    "X85n1590_003:0132a17_9": "師曰。",
    "X85n1590_003:0132a17_10": "孤峯頂上木人叫。",
    "X85n1590_003:0132a17_11": "紅焰輝中石馬嘶。",
    "X85n1590_003:0132a19_0": "雲居岳法嗣",
    "X85n1590_003:0132a20_0": "梓州龍泉和尚僧問。",
    "X85n1590_003:0132a20_1": "如何是祖師西來意。",
    "X85n1590_003:0132a20_2": "師曰。",
    "X85n1590_003:0132a20_3": "不在闍黎分上。",
    "X85n1590_003:0132a21_4": "問學人欲跳萬丈洪崖時如何。",
    "X85n1590_003:0132a21_5": "師曰。",
    "X85n1590_003:0132a21_6": "撲殺。",
    "X85n1590_003:0132a22_0": "含珠哲法嗣",
    "X85n1590_003:0132a23_0": "洋州龍穴山和尚僧問。",
    "X85n1590_003:0132a23_1": "如何是西來意。",
    "X85n1590_003:0132a23_2": "師曰。",
    "X85n1590_003:0132a23_3": "騎虎唱巴歌。",
    "X85n1590_003:0132a24_4": "問既是善知識。",
    "X85n1590_003:0132a24_5": "為甚麼却與土地燒錢。",
    "X85n1590_003:0132a24_6": "師曰。",
    "X85n1590_003:0132a24_7": "彼上人者難為酬對。",
    "X85n1590_003:0132b02_0": "紫陵一法嗣",
    "X85n1590_003:0132b03_0": "興元府大浪和尚僧問。",
    "X85n1590_003:0132b03_1": "既是活河神。",
    "X85n1590_003:0132b03_2": "為甚麼被水推却。",
    "X85n1590_003:0132b04_3": "師曰。",
    "X85n1590_003:0132b04_4": "隨流始得妙。",
    "X85n1590_003:0132b04_5": "住岸却成迷。",
    "X85n1590_003:0132b05_0": "大鑒下第九世",
    "X85n1590_003:0132b06_0": "黃龍機法嗣",
    "X85n1590_003:0132b07_0": "眉州黃龍繼達禪師僧問。",
    "X85n1590_003:0132b07_1": "如何是衲。",
    "X85n1590_003:0132b07_2": "師曰。",
    "X85n1590_003:0132b07_3": "針去線不回。",
    "X85n1590_003:0132b08_4": "曰如何是帔。",
    "X85n1590_003:0132b08_5": "師曰。",
    "X85n1590_003:0132b08_6": "橫鋪四世界。",
    "X85n1590_003:0132b08_7": "豎葢一乾坤。",
    "X85n1590_003:0132b08_8": "曰道滿到來時如何。",
    "X85n1590_003:0132b09_9": "師曰。",
    "X85n1590_003:0132b09_10": "要羹與羹。",
    "X85n1590_003:0132b09_11": "要飯與飯。",
    "X85n1590_003:0132b09_12": "問黃龍出世。",
    "X85n1590_003:0132b10_13": "金翅鳥滿空飛時如何。",
    "X85n1590_003:0132b10_14": "師曰。",
    "X85n1590_003:0132b10_15": "問汝金翅鳥。",
    "X85n1590_003:0132b10_16": "還得飽也無。",
    "X85n1590_003:0132b12_0": "興元府玄都山澄禪師僧問。",
    "X85n1590_003:0132b12_1": "喜得趨方丈。",
    "X85n1590_003:0132b12_2": "家風事若何。",
    "X85n1590_003:0132b13_3": "師曰。",
    "X85n1590_003:0132b13_4": "西風開曉露。",
    "X85n1590_003:0132b13_5": "明月正當天。",
    "X85n1590_003:0132b13_6": "曰如何拯濟。",
    "X85n1590_003:0132b13_7": "師曰。",
    "X85n1590_003:0132b14_0": "金鷄樓上一下鼓。",
    "X85n1590_003:0132b14_1": "問如何是沙門行。",
    "X85n1590_003:0132b14_2": "師曰。",
    "X85n1590_003:0132b14_3": "一切不如。",
    "X85n1590_003:0132b15_0": "嘉州黑水和尚初參黃龍。",
    "X85n1590_003:0132b15_1": "便問。",
    "X85n1590_003:0132b15_2": "雪覆蘆花時如何。",
    "X85n1590_003:0132b15_3": "龍便打。",
    "X85n1590_003:0132b16_4": "師於此有省。",
    "X85n1590_003:0132b16_5": "即便禮拜。",
    "X85n1590_003:0132b17_0": "眉州昌福達禪師僧問。",
    "X85n1590_003:0132b17_1": "學人來問師則對。",
    "X85n1590_003:0132b17_2": "不問時師意如何。",
    "X85n1590_003:0132b18_3": "師曰。",
    "X85n1590_003:0132b18_4": "謝師兄指示。",
    "X85n1590_003:0132b18_5": "問本來則不問。",
    "X85n1590_003:0132b18_6": "如何是今日事。",
    "X85n1590_003:0132b19_7": "師曰。",
    "X85n1590_003:0132b19_8": "師兄者問大好。",
    "X85n1590_003:0132b19_9": "曰學人不會時如何。",
    "X85n1590_003:0132b19_10": "師曰。",
    "X85n1590_003:0132b20_0": "謾得即得。",
    "X85n1590_003:0132b20_1": "問國有寶刀。",
    "X85n1590_003:0132b20_2": "誰人得見。",
    "X85n1590_003:0132b20_3": "師曰。",
    "X85n1590_003:0132b20_4": "師兄遠來不易。",
    "X85n1590_003:0132b21_5": "曰此刀作何形狀。",
    "X85n1590_003:0132b21_6": "師曰。",
    "X85n1590_003:0132b21_7": "要也道。",
    "X85n1590_003:0132b21_8": "不要也道。",
    "X85n1590_003:0132b21_9": "曰請師道。",
    "X85n1590_003:0132b22_10": "師曰。",
    "X85n1590_003:0132b22_11": "難逢難遇。",
    "X85n1590_003:0132b22_12": "問石牛水上臥時如何。",
    "X85n1590_003:0132b22_13": "師曰。",
    "X85n1590_003:0132b22_14": "異中還有異。",
    "X85n1590_003:0132b23_15": "妄計不浮沉。",
    "X85n1590_003:0132b23_16": "曰便恁麼去時如何。",
    "X85n1590_003:0132b23_17": "師曰。",
    "X85n1590_003:0132b23_18": "翅天日落。",
    "X85n1590_003:0132b24_19": "把土成金。",
    "X85n1590_003:0132c01_0": "大龍洪法嗣",
    "X85n1590_003:0132c02_0": "興元府普通院從善禪師僧問。",
    "X85n1590_003:0132c02_1": "法輪再轉時如何。",
    "X85n1590_003:0132c02_2": "師曰。",
    "X85n1590_003:0132c03_3": "助上座喜。",
    "X85n1590_003:0132c03_4": "曰合譚何事。",
    "X85n1590_003:0132c03_5": "師曰。",
    "X85n1590_003:0132c03_6": "異人掩耳。",
    "X85n1590_003:0132c03_7": "曰便恁麼領會時如何。",
    "X85n1590_003:0132c04_8": "師曰錯。",
    "X85n1590_003:0132c04_9": "問佩劍叩松關時如何。",
    "X85n1590_003:0132c04_10": "師曰。",
    "X85n1590_003:0132c04_11": "莫亂作。",
    "X85n1590_003:0132c05_12": "曰誰不知有。",
    "X85n1590_003:0132c05_13": "師曰出。",
    "X85n1590_003:0132c06_0": "護國遠法嗣",
    "X85n1590_003:0132c07_0": "懷安軍雲頂德敷禪師初參護國。",
    "X85n1590_003:0132c07_1": "問曰。",
    "X85n1590_003:0132c07_2": "直截根源佛所印。",
    "X85n1590_003:0132c08_3": "摘葉尋枝我不能時如何。",
    "X85n1590_003:0132c08_4": "國曰。",
    "X85n1590_003:0132c08_5": "罷攀雲樹三秋果。",
    "X85n1590_003:0132c09_6": "休弄碧潭孤月輪。",
    "X85n1590_003:0132c09_7": "師乃頓釋所疑。",
    "X85n1590_003:0132c09_8": "住後。",
    "X85n1590_003:0132c09_9": "成都帥請就衙陞座。",
    "X85n1590_003:0132c10_10": "有樂營將。",
    "X85n1590_003:0132c10_11": "出禮拜起。",
    "X85n1590_003:0132c10_12": "回顧下馬臺曰。",
    "X85n1590_003:0132c10_13": "一口吸盡西江水即不問。",
    "X85n1590_003:0132c11_14": "請師吞却堦前下馬臺。",
    "X85n1590_003:0132c11_15": "師展兩手唱曰。",
    "X85n1590_003:0132c12_16": "細抹將來。",
    "X85n1590_003:0132c12_17": "營將猛省。",
    "X85n1590_003:0132c13_0": "石門徹法嗣",
    "X85n1590_003:0132c14_0": "嘉州承天義懃禪師僧問。",
    "X85n1590_003:0132c14_1": "如何是承天境。",
    "X85n1590_003:0132c14_2": "師曰。",
    "X85n1590_003:0132c14_3": "兩江夾却青盲漢。",
    "X85n1590_003:0132c15_4": "一帶山藏赤脚蠻。",
    "X85n1590_003:0132c15_5": "問如何是諦實之言。",
    "X85n1590_003:0132c16_0": "師曰。",
    "X85n1590_003:0132c16_1": "措大巾子黑。",
    "X85n1590_003:0132c17_0": "德山密法嗣",
    "X85n1590_003:0132c18_0": "興元府中梁山崇禪師僧問。",
    "X85n1590_003:0132c18_1": "垂絲千尺。",
    "X85n1590_003:0132c18_2": "意在深潭時如何。",
    "X85n1590_003:0132c19_3": "師曰。",
    "X85n1590_003:0132c19_4": "紅鱗掌上躍。",
    "X85n1590_003:0132c20_0": "益州東禪秀禪師僧問。",
    "X85n1590_003:0132c20_1": "既是善神。",
    "X85n1590_003:0132c20_2": "為甚麼却被雷打。",
    "X85n1590_003:0132c21_0": "師曰。",
    "X85n1590_003:0132c21_1": "世亂奴欺主。",
    "X85n1590_003:0132c21_2": "年衰鬼弄人。",
    "X85n1590_003:0132c21_3": "問如何是一代時教。",
    "X85n1590_003:0132c22_0": "師曰。",
    "X85n1590_003:0132c22_1": "多年故紙。",
    "X85n1590_003:0132c23_0": "乾明居信法嗣",
    "X85n1590_003:0132c24_0": "[郫-卑+((白-日+田)/廾)]縣西禪埀白禪師僧問。",
    "X85n1590_003:0132c24_1": "香煙纔起大眾雲臻。",
    "X85n1590_003:0132c24_2": "祖意西來請師垂示。",
    "X85n1590_003:0133a01_3": "師云。",
    "X85n1590_003:0133a01_4": "心光自照。",
    "X85n1590_003:0133a01_5": "僧云。",
    "X85n1590_003:0133a01_6": "恁麼則一句於師親領得。",
    "X85n1590_003:0133a02_7": "永鎮[郫-卑+((白-日+田)/廾)]城萬古傳。",
    "X85n1590_003:0133a02_8": "師云。",
    "X85n1590_003:0133a02_9": "是人有分。",
    "X85n1590_003:0133a03_0": "雙泉寬法嗣",
    "X85n1590_003:0133a04_0": "襄州延慶宗本禪師僧問。",
    "X85n1590_003:0133a04_1": "魚未跳龍門時如何。",
    "X85n1590_003:0133a04_2": "師曰。",
    "X85n1590_003:0133a05_0": "擺手入長安。",
    "X85n1590_003:0133a05_1": "曰跳過後如何。",
    "X85n1590_003:0133a05_2": "師曰。",
    "X85n1590_003:0133a05_3": "長安雖樂。",
    "X85n1590_003:0133a05_4": "不可久留。",
    "X85n1590_003:0133a07_0": "香林遠法嗣",
    "X85n1590_003:0133a08_0": "灌州羅漢和尚僧問。",
    "X85n1590_003:0133a08_1": "如何是佛。",
    "X85n1590_003:0133a08_2": "師曰。",
    "X85n1590_003:0133a08_3": "牛頭阿旁。",
    "X85n1590_003:0133a08_4": "曰如何是法。",
    "X85n1590_003:0133a09_5": "師曰。",
    "X85n1590_003:0133a09_6": "劍樹刀山。",
    "X85n1590_003:0133a09_7": "問如何是佛法大意。",
    "X85n1590_003:0133a09_8": "師曰。",
    "X85n1590_003:0133a09_9": "井中紅焰。",
    "X85n1590_003:0133a10_10": "日裏浮漚。",
    "X85n1590_003:0133a10_11": "曰如何領會。",
    "X85n1590_003:0133a10_12": "師曰。",
    "X85n1590_003:0133a10_13": "遙指扶桑日那邊。",
    "X85n1590_003:0133a11_14": "問如何是本來心。",
    "X85n1590_003:0133a11_15": "師曰。",
    "X85n1590_003:0133a11_16": "蹉過了也。",
    "X85n1590_003:0133a12_0": "灌州青城香林信禪師僧問。",
    "X85n1590_003:0133a12_1": "覿面相呈時如何。",
    "X85n1590_003:0133a12_2": "師曰。",
    "X85n1590_003:0133a13_0": "築著鼻孔。",
    "X85n1590_003:0133a14_0": "妙勝臻法嗣",
    "X85n1590_003:0133a15_0": "西川雪峯欽山主上堂。",
    "X85n1590_003:0133a15_1": "昨日一。",
    "X85n1590_003:0133a15_2": "今日二。",
    "X85n1590_003:0133a15_3": "不用思量。",
    "X85n1590_003:0133a15_4": "快須瞥地。",
    "X85n1590_003:0133a16_5": "不瞥地。",
    "X85n1590_003:0133a16_6": "蹉過平生沒巴鼻。",
    "X85n1590_003:0133a16_7": "咄。",
    "X85n1590_003:0133a17_0": "大鑒下第十世",
    "X85n1590_003:0133a18_0": "黃龍達法嗣",
    "X85n1590_003:0133a19_0": "眉州黃龍禪師僧問。",
    "X85n1590_003:0133a19_1": "如何是密室。",
    "X85n1590_003:0133a19_2": "師曰。",
    "X85n1590_003:0133a19_3": "斫不開。",
    "X85n1590_003:0133a19_4": "曰如何是密室中人。",
    "X85n1590_003:0133a20_5": "師曰。",
    "X85n1590_003:0133a20_6": "非男女相。",
    "X85n1590_003:0133a20_7": "問國內按劍者是誰。",
    "X85n1590_003:0133a21_0": "師曰昌福。",
    "X85n1590_003:0133a21_1": "曰忽遇尊貴時如何。",
    "X85n1590_003:0133a21_2": "師曰不遺。",
    "X85n1590_003:0133a22_0": "清凉益法嗣",
    "X85n1590_003:0133a23_0": "大梅慧明禪師參法眼得心印。",
    "X85n1590_003:0133a23_1": "初菴於大梅。",
    "X85n1590_003:0133a23_2": "有禪者來參。",
    "X85n1590_003:0133a24_3": "師問。",
    "X85n1590_003:0133a24_4": "近離甚處。",
    "X85n1590_003:0133a24_5": "曰成都。",
    "X85n1590_003:0133a24_6": "曰上座離成都到此山。",
    "X85n1590_003:0133b01_0": "則成都少上座。",
    "X85n1590_003:0133b01_1": "此間剩上座。",
    "X85n1590_003:0133b01_2": "剩則心外有法。",
    "X85n1590_003:0133b01_3": "少則心法不周。",
    "X85n1590_003:0133b02_4": "說得道理即住。",
    "X85n1590_003:0133b02_5": "不會即去。",
    "X85n1590_003:0133b02_6": "僧無對。",
    "X85n1590_003:0133b03_0": "梁山緣觀法嗣",
    "X85n1590_003:0133b04_0": "鼎州梁山巖禪師僧問。",
    "X85n1590_003:0133b04_1": "如何是祖師西來意。",
    "X85n1590_003:0133b04_2": "師曰。",
    "X85n1590_003:0133b04_3": "新羅附子。",
    "X85n1590_003:0133b05_4": "蜀地當歸。",
    "X85n1590_003:0133b06_0": "石門遠法嗣",
    "X85n1590_003:0133b07_0": "懷安軍雲頂上鑒禪師僧問。",
    "X85n1590_003:0133b07_1": "雪點紅爐。",
    "X85n1590_003:0133b07_2": "請師驗的。",
    "X85n1590_003:0133b07_3": "師曰。",
    "X85n1590_003:0133b08_4": "王婆煑[飢-几+追]。",
    "X85n1590_003:0133b08_5": "曰爭奈即今何。",
    "X85n1590_003:0133b08_6": "師曰。",
    "X85n1590_003:0133b08_7": "猶嫌少在。",
    "X85n1590_003:0133b09_0": "果州清居山昇禪師僧問。",
    "X85n1590_003:0133b09_1": "師唱誰家曲。",
    "X85n1590_003:0133b09_2": "宗風嗣阿誰。",
    "X85n1590_003:0133b10_0": "師曰。",
    "X85n1590_003:0133b10_1": "金雞啼石戶。",
    "X85n1590_003:0133b10_2": "得意逐波清。",
    "X85n1590_003:0133b10_3": "曰未審是誰之子。",
    "X85n1590_003:0133b10_4": "師曰。",
    "X85n1590_003:0133b11_5": "謝汝就門罵詈。",
    "X85n1590_003:0133b12_0": "黑水璟法嗣",
    "X85n1590_003:0133b13_0": "峩眉黑水義欽禪師上堂。",
    "X85n1590_003:0133b13_1": "僧出禮拜。",
    "X85n1590_003:0133b13_2": "師曰。",
    "X85n1590_003:0133b13_3": "大地百雜碎。",
    "X85n1590_003:0133b14_4": "便下座。",
    "X85n1590_003:0133b15_0": "智門祚法嗣",
    "X85n1590_003:0133b16_0": "明州雪竇重顯禪師遂寧府李氏子。",
    "X85n1590_003:0133b16_1": "依普安院仁銑上人出家。",
    "X85n1590_003:0133b17_2": "受具之後橫經講席。",
    "X85n1590_003:0133b17_3": "究理窮玄。",
    "X85n1590_003:0133b17_4": "詰問鋒馳。",
    "X85n1590_003:0133b18_0": "機辯無敵。",
    "X85n1590_003:0133b18_1": "咸知法器。",
    "X85n1590_003:0133b18_2": "僉指南遊。",
    "X85n1590_003:0133b18_3": "首造智門。",
    "X85n1590_003:0133b18_4": "即伸問曰。",
    "X85n1590_003:0133b19_0": "不起一念。",
    "X85n1590_003:0133b19_1": "云何有過。",
    "X85n1590_003:0133b19_2": "門召師近前。",
    "X85n1590_003:0133b19_3": "師纔近前。",
    "X85n1590_003:0133b19_4": "門以拂子驀口打。",
    "X85n1590_003:0133b20_5": "師擬開口。",
    "X85n1590_003:0133b20_6": "門又打。",
    "X85n1590_003:0133b20_7": "師豁然開悟。",
    "X85n1590_003:0133b20_8": "出住翠峰。",
    "X85n1590_003:0133b21_0": "後遷雪竇。",
    "X85n1590_003:0133b21_1": "開堂日。",
    "X85n1590_003:0133b21_2": "於法座前顧視大眾曰。",
    "X85n1590_003:0133b21_3": "若論本分相見。",
    "X85n1590_003:0133b22_4": "不必高陞法座。",
    "X85n1590_003:0133b22_5": "遂以手畫一畫曰。",
    "X85n1590_003:0133b22_6": "諸人隨山僧手看。",
    "X85n1590_003:0133b23_7": "無量諸佛國土一時現前。",
    "X85n1590_003:0133b23_8": "各各子細觀瞻。",
    "X85n1590_003:0133b23_9": "其或涯際未知。",
    "X85n1590_003:0133b24_10": "不免拖泥帶水。",
    "X85n1590_003:0133b24_11": "便陞座。",
    "X85n1590_003:0133b24_12": "上首白椎罷。",
    "X85n1590_003:0133b24_13": "有僧方出。",
    "X85n1590_003:0133c01_14": "師約住曰。",
    "X85n1590_003:0133c01_15": "如來正法眼藏委在今日。",
    "X85n1590_003:0133c01_16": "放行則瓦礫生光。",
    "X85n1590_003:0133c02_17": "把住則真金失色。",
    "X85n1590_003:0133c02_18": "權柄在手。",
    "X85n1590_003:0133c02_19": "殺活臨時。",
    "X85n1590_003:0133c02_20": "其有作者。",
    "X85n1590_003:0133c03_21": "共相證據。",
    "X85n1590_003:0133c03_22": "僧出問。",
    "X85n1590_003:0133c03_23": "遠離翠峰祖席。",
    "X85n1590_003:0133c03_24": "已臨雪竇道場。",
    "X85n1590_003:0133c04_25": "未審是一是二。",
    "X85n1590_003:0133c04_26": "師曰。",
    "X85n1590_003:0133c04_27": "馬無千里謾追風。",
    "X85n1590_003:0133c04_28": "曰恁麼則雲散家家月。",
    "X85n1590_003:0133c05_29": "師曰。",
    "X85n1590_003:0133c05_30": "龍頭蛇尾漢。",
    "X85n1590_003:0133c05_31": "問德山臨濟棒喝已彰。",
    "X85n1590_003:0133c06_32": "和尚如何為人。",
    "X85n1590_003:0133c06_33": "師曰。",
    "X85n1590_003:0133c06_34": "放過一著。",
    "X85n1590_003:0133c06_35": "僧擬議。",
    "X85n1590_003:0133c06_36": "師便喝。",
    "X85n1590_003:0133c06_37": "僧曰。",
    "X85n1590_003:0133c07_38": "未審祇恁麼。",
    "X85n1590_003:0133c07_39": "別有在。",
    "X85n1590_003:0133c07_40": "師曰。",
    "X85n1590_003:0133c07_41": "射虎不真。",
    "X85n1590_003:0133c07_42": "徒勞沒羽。",
    "X85n1590_003:0133c07_43": "問吹大法螺。",
    "X85n1590_003:0133c08_44": "擊大法鼓。",
    "X85n1590_003:0133c08_45": "朝宰臨筵。",
    "X85n1590_003:0133c08_46": "如何即是。",
    "X85n1590_003:0133c08_47": "師曰。",
    "X85n1590_003:0133c08_48": "清風來未休。",
    "X85n1590_003:0133c09_49": "曰恁麼則得遇於師也。",
    "X85n1590_003:0133c09_50": "師曰。",
    "X85n1590_003:0133c09_51": "一言已出。",
    "X85n1590_003:0133c09_52": "駟馬難追。",
    "X85n1590_003:0133c10_53": "僧禮拜。",
    "X85n1590_003:0133c10_54": "師曰。",
    "X85n1590_003:0133c10_55": "放過一著。",
    "X85n1590_003:0133c10_56": "乃普觀大眾曰。",
    "X85n1590_003:0133c10_57": "人天普集。",
    "X85n1590_003:0133c11_58": "合發明個甚麼事。",
    "X85n1590_003:0133c11_59": "焉可互分賓主。",
    "X85n1590_003:0133c11_60": "馳騁問答。",
    "X85n1590_003:0133c11_61": "便當宗乘去。",
    "X85n1590_003:0133c12_62": "廣大門風。",
    "X85n1590_003:0133c12_63": "威德自在。",
    "X85n1590_003:0133c12_64": "輝騰今古。",
    "X85n1590_003:0133c12_65": "把定乾坤。",
    "X85n1590_003:0133c12_66": "千聖祇言自知。",
    "X85n1590_003:0133c13_67": "五乘莫能建立。",
    "X85n1590_003:0133c13_68": "所以聲前悟旨。",
    "X85n1590_003:0133c13_69": "猶迷顧鑒之端。",
    "X85n1590_003:0133c14_70": "言下知宗。",
    "X85n1590_003:0133c14_71": "尚昧識情之表。",
    "X85n1590_003:0133c14_72": "諸人要知真實相為麼。",
    "X85n1590_003:0133c15_73": "但以上無攀仰。",
    "X85n1590_003:0133c15_74": "下絕己躬。",
    "X85n1590_003:0133c15_75": "自然常光現前。",
    "X85n1590_003:0133c15_76": "個個壁立千仞。",
    "X85n1590_003:0133c16_77": "還辯明得也無。",
    "X85n1590_003:0133c16_78": "未辯辯取。",
    "X85n1590_003:0133c16_79": "未明明取。",
    "X85n1590_003:0133c16_80": "既辯明得。",
    "X85n1590_003:0133c17_81": "能截生死流。",
    "X85n1590_003:0133c17_82": "同據佛祖位。",
    "X85n1590_003:0133c17_83": "妙圓超悟。",
    "X85n1590_003:0133c17_84": "正在此時。",
    "X85n1590_003:0133c18_0": "堪報不報之恩。",
    "X85n1590_003:0133c18_1": "以助無為之化。",
    "X85n1590_003:0133c18_2": "問如何是佛法大意。",
    "X85n1590_003:0133c19_0": "師曰。",
    "X85n1590_003:0133c19_1": "祥雲五色。",
    "X85n1590_003:0133c19_2": "曰學人不會。",
    "X85n1590_003:0133c19_3": "師曰。",
    "X85n1590_003:0133c19_4": "頭上漫漫。",
    "X85n1590_003:0133c19_5": "問達磨未來時如何。",
    "X85n1590_003:0133c20_6": "師曰。",
    "X85n1590_003:0133c20_7": "猿啼古木。",
    "X85n1590_003:0133c20_8": "曰來後如何。",
    "X85n1590_003:0133c20_9": "師曰。",
    "X85n1590_003:0133c20_10": "鶴唳青霄。",
    "X85n1590_003:0133c21_11": "曰即今事作麼生。",
    "X85n1590_003:0133c21_12": "師曰。",
    "X85n1590_003:0133c21_13": "一不成二不是。",
    "X85n1590_003:0133c21_14": "問和尚未見智門時如何。",
    "X85n1590_003:0133c22_15": "師曰。",
    "X85n1590_003:0133c22_16": "爾鼻孔在我手裏。",
    "X85n1590_003:0133c22_17": "曰見後如何。",
    "X85n1590_003:0133c23_18": "師曰。",
    "X85n1590_003:0133c23_19": "穿過髑髏。",
    "X85n1590_003:0133c23_20": "有僧出禮拜起曰。",
    "X85n1590_003:0133c23_21": "請師答話。",
    "X85n1590_003:0133c23_22": "師便棒。",
    "X85n1590_003:0133c24_23": "僧曰。",
    "X85n1590_003:0133c24_24": "豈無方便。",
    "X85n1590_003:0133c24_25": "師曰。",
    "X85n1590_003:0133c24_26": "罪不重科。",
    "X85n1590_003:0133c24_27": "復有一僧出禮拜起曰。",
    "X85n1590_003:0134a01_28": "請師答話。",
    "X85n1590_003:0134a01_29": "師曰。",
    "X85n1590_003:0134a01_30": "兩重公案。",
    "X85n1590_003:0134a01_31": "曰請師不答話。",
    "X85n1590_003:0134a01_32": "師亦棒。",
    "X85n1590_003:0134a02_33": "問古人道北斗裏藏身。",
    "X85n1590_003:0134a02_34": "意旨如何。",
    "X85n1590_003:0134a02_35": "師曰。",
    "X85n1590_003:0134a02_36": "千聞不如一見。",
    "X85n1590_003:0134a03_37": "曰此話大行。",
    "X85n1590_003:0134a03_38": "師曰。",
    "X85n1590_003:0134a03_39": "老鼠銜銕。",
    "X85n1590_003:0134a03_40": "問古人道皎皎地絕一絲頭。",
    "X85n1590_003:0134a04_41": "祇如山河大地。",
    "X85n1590_003:0134a04_42": "又且如何。",
    "X85n1590_003:0134a04_43": "師曰。",
    "X85n1590_003:0134a04_44": "面赤不如語直。",
    "X85n1590_003:0134a05_45": "曰學人未曉。",
    "X85n1590_003:0134a05_46": "師曰。",
    "X85n1590_003:0134a05_47": "徧問諸方。",
    "X85n1590_003:0134a05_48": "問如何是學人自己。",
    "X85n1590_003:0134a06_49": "師曰。",
    "X85n1590_003:0134a06_50": "乘槎斫額。",
    "X85n1590_003:0134a06_51": "曰莫祇者便是。",
    "X85n1590_003:0134a06_52": "師曰。",
    "X85n1590_003:0134a06_53": "浪死虗生。",
    "X85n1590_003:0134a06_54": "問如何是緣生義。",
    "X85n1590_003:0134a07_55": "師曰。",
    "X85n1590_003:0134a07_56": "金剛鑄銕券。",
    "X85n1590_003:0134a07_57": "曰學人不會。",
    "X85n1590_003:0134a07_58": "師曰閙市裏牌。",
    "X85n1590_003:0134a08_59": "曰恁麼則行到水窮處。",
    "X85n1590_003:0134a08_60": "坐看雲起時。",
    "X85n1590_003:0134a08_61": "師曰列下。",
    "X85n1590_003:0134a09_62": "問四十九年說不盡底。",
    "X85n1590_003:0134a09_63": "請師說。",
    "X85n1590_003:0134a09_64": "師曰。",
    "X85n1590_003:0134a09_65": "爭之不足。",
    "X85n1590_003:0134a10_0": "曰謝師答話。",
    "X85n1590_003:0134a10_1": "師曰。",
    "X85n1590_003:0134a10_2": "銕棒自看。",
    "X85n1590_003:0134a10_3": "問如何是把定乾坤眼。",
    "X85n1590_003:0134a11_0": "師曰。",
    "X85n1590_003:0134a11_1": "拈却鼻孔。",
    "X85n1590_003:0134a11_2": "曰學人不會。",
    "X85n1590_003:0134a11_3": "師曰。",
    "X85n1590_003:0134a11_4": "一喜一悲。",
    "X85n1590_003:0134a11_5": "僧擬議。",
    "X85n1590_003:0134a12_0": "師曰苦。",
    "X85n1590_003:0134a12_1": "問如何是脫珍御服。",
    "X85n1590_003:0134a12_2": "著弊垢衣。",
    "X85n1590_003:0134a12_3": "師曰。",
    "X85n1590_003:0134a12_4": "垂手不垂手。",
    "X85n1590_003:0134a13_5": "曰乞師方便。",
    "X85n1590_003:0134a13_6": "師曰。",
    "X85n1590_003:0134a13_7": "左眼挑筋。",
    "X85n1590_003:0134a13_8": "右眼抉肉。",
    "X85n1590_003:0134a13_9": "問龍門爭進舉。",
    "X85n1590_003:0134a14_10": "那個登科。",
    "X85n1590_003:0134a14_11": "師曰。",
    "X85n1590_003:0134a14_12": "重遭點額。",
    "X85n1590_003:0134a14_13": "曰學人不會。",
    "X85n1590_003:0134a14_14": "師曰。",
    "X85n1590_003:0134a15_0": "退水藏鱗。",
    "X85n1590_003:0134a15_1": "問寂寂忘言。",
    "X85n1590_003:0134a15_2": "誰是得者。",
    "X85n1590_003:0134a15_3": "師曰。",
    "X85n1590_003:0134a15_4": "卸帽穿雲去。",
    "X85n1590_003:0134a16_0": "曰如何領會。",
    "X85n1590_003:0134a16_1": "師曰。",
    "X85n1590_003:0134a16_2": "披簑帶雨歸。",
    "X85n1590_003:0134a16_3": "曰三十年後此話大行。",
    "X85n1590_003:0134a17_4": "師曰。",
    "X85n1590_003:0134a17_5": "一場酸澀。",
    "X85n1590_003:0134a17_6": "問坐斷毗盧底人。",
    "X85n1590_003:0134a17_7": "師還接否。",
    "X85n1590_003:0134a17_8": "師曰。",
    "X85n1590_003:0134a18_0": "殷勤送別瀟湘岸。",
    "X85n1590_003:0134a18_1": "曰恁麼則學人罪過。",
    "X85n1590_003:0134a18_2": "師曰。",
    "X85n1590_003:0134a18_3": "天寬地窄太愁人。",
    "X85n1590_003:0134a19_4": "僧禮拜。",
    "X85n1590_003:0134a19_5": "師曰。",
    "X85n1590_003:0134a19_6": "苦屈之詞。",
    "X85n1590_003:0134a19_7": "不妨難吐。",
    "X85n1590_003:0134a19_8": "問生死到來。",
    "X85n1590_003:0134a20_9": "如何回避。",
    "X85n1590_003:0134a20_10": "師曰。",
    "X85n1590_003:0134a20_11": "定花板上。",
    "X85n1590_003:0134a20_12": "曰莫便是他安身立命處也無。",
    "X85n1590_003:0134a21_13": "師曰。",
    "X85n1590_003:0134a21_14": "符到奉行。",
    "X85n1590_003:0134a21_15": "上堂。",
    "X85n1590_003:0134a21_16": "僧問。",
    "X85n1590_003:0134a21_17": "如何是吹毛劍。",
    "X85n1590_003:0134a22_0": "師曰苦。",
    "X85n1590_003:0134a22_1": "曰還許學人用也無。",
    "X85n1590_003:0134a22_2": "師噓一噓。",
    "X85n1590_003:0134a22_3": "乃曰。",
    "X85n1590_003:0134a22_4": "大眾前共相酬唱。",
    "X85n1590_003:0134a23_5": "也須是個漢始得。",
    "X85n1590_003:0134a23_6": "若也未有奔流度刃底眼。",
    "X85n1590_003:0134a24_7": "不勞拈出。",
    "X85n1590_003:0134a24_8": "所以道。",
    "X85n1590_003:0134a24_9": "如大火聚。",
    "X85n1590_003:0134a24_10": "近著即燎却面門。",
    "X85n1590_003:0134a24_11": "亦如按太阿寶劍。",
    "X85n1590_003:0134b01_12": "衝前即喪身失命。",
    "X85n1590_003:0134b01_13": "乃曰。",
    "X85n1590_003:0134b01_14": "太阿橫按祖堂寒。",
    "X85n1590_003:0134b02_15": "千里應須息萬端。",
    "X85n1590_003:0134b02_16": "莫待冷光輕閃爍。",
    "X85n1590_003:0134b02_17": "復云看看。",
    "X85n1590_003:0134b03_0": "便下座。",
    "X85n1590_003:0134b03_1": "上堂。",
    "X85n1590_003:0134b03_2": "僧問。",
    "X85n1590_003:0134b03_3": "如何是維摩一默。",
    "X85n1590_003:0134b03_4": "師曰。",
    "X85n1590_003:0134b03_5": "寒山訪拾得。",
    "X85n1590_003:0134b04_6": "曰恁麼則入不二之門。",
    "X85n1590_003:0134b04_7": "師噓一噓。",
    "X85n1590_003:0134b04_8": "復曰。",
    "X85n1590_003:0134b04_9": "維摩大士去何從。",
    "X85n1590_003:0134b05_10": "千古令人望莫窮。",
    "X85n1590_003:0134b05_11": "不二法門休更問。",
    "X85n1590_003:0134b05_12": "夜來明月上孤峯。",
    "X85n1590_003:0134b06_13": "乃曰。",
    "X85n1590_003:0134b06_14": "七月七日復相見耳。",
    "X85n1590_003:0134b06_15": "至期。",
    "X85n1590_003:0134b06_16": "盥沐攝衣。",
    "X85n1590_003:0134b07_0": "北首而逝。",
    "X85n1590_003:0134b07_1": "塔全身於寺之西塢。",
    "X85n1590_003:0134b07_2": "賜明覺大師。",
    "X85n1590_003:0134b08_0": "德山遠法嗣",
    "X85n1590_003:0134b09_0": "興元府大中仁辯禪師僧問。",
    "X85n1590_003:0134b09_1": "如何是焦崖境。",
    "X85n1590_003:0134b09_2": "師云。",
    "X85n1590_003:0134b09_3": "庭前寒柏老。",
    "X85n1590_003:0134b10_4": "祖意不西來。",
    "X85n1590_003:0134b10_5": "僧云。",
    "X85n1590_003:0134b10_6": "如何是境中人。",
    "X85n1590_003:0134b10_7": "師云。",
    "X85n1590_003:0134b10_8": "胡僧深碧眼。",
    "X85n1590_003:0134b11_9": "跣足躡階行。",
    "X85n1590_003:0134b12_0": "益州菩提桂芳禪師僧問。",
    "X85n1590_003:0134b12_1": "諸佛出世。",
    "X85n1590_003:0134b12_2": "梵王前引。",
    "X85n1590_003:0134b12_3": "帝釋後隨。",
    "X85n1590_003:0134b13_4": "和尚出世。",
    "X85n1590_003:0134b13_5": "有何祥瑞。",
    "X85n1590_003:0134b13_6": "師曰。",
    "X85n1590_003:0134b13_7": "三春萬象妍。",
    "X85n1590_003:0134b13_8": "僧云。",
    "X85n1590_003:0134b13_9": "學人未曉。",
    "X85n1590_003:0134b14_10": "師曰。",
    "X85n1590_003:0134b14_11": "溪花紅似錦。",
    "X85n1590_003:0134b14_12": "岸柳綠如藍。",
    "X85n1590_003:0134b14_13": "僧云。",
    "X85n1590_003:0134b14_14": "便恁麼去時如何。",
    "X85n1590_003:0134b15_15": "師曰。",
    "X85n1590_003:0134b15_16": "未曾騎竹馬。",
    "X85n1590_003:0134b15_17": "切忌跨金龍。",
    "X85n1590_003:0134b16_0": "大鑒下第十一世",
    "X85n1590_003:0134b17_0": "谷隱聰法嗣",
    "X85n1590_003:0134b18_0": "彭州永福院延照禪師僧問。",
    "X85n1590_003:0134b18_1": "如何是彭州境。",
    "X85n1590_003:0134b18_2": "師曰。",
    "X85n1590_003:0134b18_3": "人馬合雜。",
    "X85n1590_003:0134b19_4": "僧以手作拽弓勢。",
    "X85n1590_003:0134b19_5": "師拈棒。",
    "X85n1590_003:0134b19_6": "僧擬議。",
    "X85n1590_003:0134b19_7": "師便打。",
    "X85n1590_003:0134b20_0": "果州永慶光普禪師初問谷隱。",
    "X85n1590_003:0134b20_1": "古人道。",
    "X85n1590_003:0134b20_2": "來日大悲院裏有齋。",
    "X85n1590_003:0134b21_3": "意旨如何。",
    "X85n1590_003:0134b21_4": "曰日出隈陽坐。",
    "X85n1590_003:0134b21_5": "天寒不舉頭。",
    "X85n1590_003:0134b21_6": "師入室次。",
    "X85n1590_003:0134b22_7": "隱曰。",
    "X85n1590_003:0134b22_8": "適來因緣。",
    "X85n1590_003:0134b22_9": "汝作麼生會。",
    "X85n1590_003:0134b22_10": "師曰。",
    "X85n1590_003:0134b22_11": "會則途中受用。",
    "X85n1590_003:0134b23_12": "不會則世諦流布。",
    "X85n1590_003:0134b23_13": "曰未在更道。",
    "X85n1590_003:0134b23_14": "師拂袖便出。",
    "X85n1590_003:0134b23_15": "住後僧問。",
    "X85n1590_003:0134b24_16": "如何是佛法大意。",
    "X85n1590_003:0134b24_17": "師曰。",
    "X85n1590_003:0134b24_18": "蜀地用鑌銕。",
    "X85n1590_003:0134c01_0": "葉縣省法嗣",
    "X85n1590_003:0134c02_0": "[障-音]邡方水禪師示眾云。",
    "X85n1590_003:0134c02_1": "方水潭中鼈鼻蛇。",
    "X85n1590_003:0134c02_2": "擬心相向便揄揶。",
    "X85n1590_003:0134c03_3": "何人拔得蛇頭出。",
    "X85n1590_003:0134c03_4": "(請續後句)二百年後。",
    "X85n1590_003:0134c03_5": "大隋元靖長老著語云。",
    "X85n1590_003:0134c04_6": "方水潭中鼈鼻蛇。",
    "X85n1590_003:0134c04_7": "圓悟勤著語云。",
    "X85n1590_003:0134c04_8": "雲門餬餅趙州茶。",
    "X85n1590_003:0134c05_9": "瞎堂遠云。",
    "X85n1590_003:0134c05_10": "摩呢噠哩吽[口*發]吒。",
    "X85n1590_003:0134c05_11": "丈雪醉著語云。",
    "X85n1590_003:0134c06_12": "咲指庭前一樹花。",
    "X85n1590_003:0134c07_0": "大陽玄法嗣",
    "X85n1590_003:0134c08_0": "惠州羅浮山顯如禪師初到大陽。",
    "X85n1590_003:0134c08_1": "陽問。",
    "X85n1590_003:0134c08_2": "汝是甚處人。",
    "X85n1590_003:0134c09_0": "曰益州。",
    "X85n1590_003:0134c09_1": "陽曰。",
    "X85n1590_003:0134c09_2": "此去幾里。",
    "X85n1590_003:0134c09_3": "曰五千里。",
    "X85n1590_003:0134c09_4": "陽曰。",
    "X85n1590_003:0134c09_5": "你與麼來。",
    "X85n1590_003:0134c09_6": "還曾踏著麼。",
    "X85n1590_003:0134c10_7": "曰不曾踏著。",
    "X85n1590_003:0134c10_8": "陽曰。",
    "X85n1590_003:0134c10_9": "汝解騰空那。",
    "X85n1590_003:0134c10_10": "曰不解騰空。",
    "X85n1590_003:0134c11_11": "陽曰。",
    "X85n1590_003:0134c11_12": "爭得到者裏。",
    "X85n1590_003:0134c11_13": "曰步步不迷方。",
    "X85n1590_003:0134c11_14": "通身無辨處。",
    "X85n1590_003:0134c11_15": "陽曰。",
    "X85n1590_003:0134c12_16": "汝得超方三昧邪。",
    "X85n1590_003:0134c12_17": "曰聖心不可得。",
    "X85n1590_003:0134c12_18": "三昧豈彰名。",
    "X85n1590_003:0134c12_19": "陽曰。",
    "X85n1590_003:0134c13_20": "如是如是。",
    "X85n1590_003:0134c13_21": "汝應信此。",
    "X85n1590_003:0134c13_22": "即本體全彰。",
    "X85n1590_003:0134c13_23": "理事不二。",
    "X85n1590_003:0134c13_24": "善自護持。",
    "X85n1590_003:0134c14_25": "住後僧問。",
    "X85n1590_003:0134c14_26": "如何是羅浮境。",
    "X85n1590_003:0134c14_27": "師曰。",
    "X85n1590_003:0134c14_28": "突兀侵天際。",
    "X85n1590_003:0134c14_29": "巍峩鎮海涯。",
    "X85n1590_003:0134c15_30": "曰如何是境中人。",
    "X85n1590_003:0134c15_31": "師曰。",
    "X85n1590_003:0134c15_32": "頂上白雲散。",
    "X85n1590_003:0134c15_33": "足下黑煙生。",
    "X85n1590_003:0134c17_0": "懷安軍雲頂海鵬禪師僧問。",
    "X85n1590_003:0134c17_1": "如何是大疑底人。",
    "X85n1590_003:0134c17_2": "師曰。",
    "X85n1590_003:0134c18_0": "畢鉢巖中。",
    "X85n1590_003:0134c18_1": "面面相覰。",
    "X85n1590_003:0134c18_2": "曰如何是不疑底人。",
    "X85n1590_003:0134c18_3": "師曰。",
    "X85n1590_003:0134c18_4": "如是我聞。",
    "X85n1590_003:0134c19_5": "須彌粉碎。",
    "X85n1590_003:0134c19_6": "問祖意教意是同是別。",
    "X85n1590_003:0134c19_7": "師曰。",
    "X85n1590_003:0134c19_8": "達磨逢梁武。",
    "X85n1590_003:0134c20_9": "摩騰遇漢明。",
    "X85n1590_003:0134c21_0": "北塔廣法嗣",
    "X85n1590_003:0134c22_0": "荊門軍玉泉承皓禪師眉州丹稜王氏子。",
    "X85n1590_003:0134c22_1": "依大力院出家。",
    "X85n1590_003:0134c23_2": "登具後遊方。",
    "X85n1590_003:0134c23_3": "參北塔。",
    "X85n1590_003:0134c23_4": "發明心要。",
    "X85n1590_003:0134c23_5": "得自在三昧。",
    "X85n1590_003:0134c23_6": "製犢鼻裩。",
    "X85n1590_003:0134c24_7": "書歷代祖師名字。",
    "X85n1590_003:0134c24_8": "乃曰。",
    "X85n1590_003:0134c24_9": "唯有文殊普賢較些子。",
    "X85n1590_003:0135a01_10": "且書於帶上。",
    "X85n1590_003:0135a01_11": "故叢林目為皓布裩。",
    "X85n1590_003:0135a01_12": "元豐間。",
    "X85n1590_003:0135a01_13": "首眾於襄陽谷隱。",
    "X85n1590_003:0135a02_14": "有鄉僧亦効之。",
    "X85n1590_003:0135a02_15": "師見而詬曰。",
    "X85n1590_003:0135a02_16": "汝具何道理。",
    "X85n1590_003:0135a03_0": "敢以為戲事耶。",
    "X85n1590_003:0135a03_1": "嘔血無及耳。",
    "X85n1590_003:0135a03_2": "尋於鹿門如所言而逝。",
    "X85n1590_003:0135a04_0": "張無盡奉使京西南路。",
    "X85n1590_003:0135a04_1": "就謁之。",
    "X85n1590_003:0135a04_2": "致開法於郢州大陽。",
    "X85n1590_003:0135a05_0": "時谷隱主者。",
    "X85n1590_003:0135a05_1": "私為之喜。",
    "X85n1590_003:0135a05_2": "師受請陞座曰。",
    "X85n1590_003:0135a05_3": "某在谷隱十年。",
    "X85n1590_003:0135a06_4": "不曾飲谷隱一滴水。",
    "X85n1590_003:0135a06_5": "嚼谷隱一粒米。",
    "X85n1590_003:0135a06_6": "汝若不會。",
    "X85n1590_003:0135a06_7": "來大陽。",
    "X85n1590_003:0135a07_8": "為汝說破。",
    "X85n1590_003:0135a07_9": "携拄杖下座。",
    "X85n1590_003:0135a07_10": "傲然而去。",
    "X85n1590_003:0135a07_11": "尋遷玉泉。",
    "X85n1590_003:0135a07_12": "有示眾曰。",
    "X85n1590_003:0135a08_13": "一夜雨霶烹。",
    "X85n1590_003:0135a08_14": "打倒葡萄棚。",
    "X85n1590_003:0135a08_15": "知事頭首行者人力。",
    "X85n1590_003:0135a09_16": "拄底拄。",
    "X85n1590_003:0135a09_17": "撐底撐。",
    "X85n1590_003:0135a09_18": "撐撐拄拄到天明。",
    "X85n1590_003:0135a09_19": "依舊可憐生。",
    "X85n1590_003:0135a09_20": "自贊。",
    "X85n1590_003:0135a10_21": "粥稀後坐。",
    "X85n1590_003:0135a10_22": "牀窄先臥。",
    "X85n1590_003:0135a10_23": "耳聵愛高聲。",
    "X85n1590_003:0135a10_24": "眼昏宜字大。",
    "X85n1590_003:0135a10_25": "冬至示眾曰。",
    "X85n1590_003:0135a11_26": "晷運推移。",
    "X85n1590_003:0135a11_27": "布裩赫赤。",
    "X85n1590_003:0135a11_28": "莫怪不洗。",
    "X85n1590_003:0135a11_29": "無來換替。",
    "X85n1590_003:0135a12_0": "僧入室次。",
    "X85n1590_003:0135a12_1": "狗子在室中。",
    "X85n1590_003:0135a12_2": "師叱一聲。",
    "X85n1590_003:0135a12_3": "狗便出去。",
    "X85n1590_003:0135a12_4": "師曰。",
    "X85n1590_003:0135a12_5": "狗却會。",
    "X85n1590_003:0135a13_6": "你却不會。",
    "X85n1590_003:0135a13_7": "師示寂。",
    "X85n1590_003:0135a13_8": "門人圍繞。",
    "X85n1590_003:0135a13_9": "師笑曰。",
    "X85n1590_003:0135a13_10": "吾年八十一。",
    "X85n1590_003:0135a14_11": "老死舁屍出。",
    "X85n1590_003:0135a14_12": "兒郎齊著力。",
    "X85n1590_003:0135a14_13": "一年三百六十日。",
    "X85n1590_003:0135a14_14": "言畢而逝。",
    "X85n1590_003:0135a16_0": "雪竇顯法嗣",
    "X85n1590_003:0135a17_0": "修撰曾會居士幼與明覺同舍。",
    "X85n1590_003:0135a17_1": "及冠異途。",
    "X85n1590_003:0135a17_2": "天禧間。",
    "X85n1590_003:0135a17_3": "公守池州。",
    "X85n1590_003:0135a18_4": "一日會于景德寺。",
    "X85n1590_003:0135a18_5": "公遂引中庸大學。",
    "X85n1590_003:0135a18_6": "參以楞嚴符宗門語句。",
    "X85n1590_003:0135a19_7": "質明覺。",
    "X85n1590_003:0135a19_8": "覺曰。",
    "X85n1590_003:0135a19_9": "者個尚不與教乘合。",
    "X85n1590_003:0135a19_10": "況中庸大學邪。",
    "X85n1590_003:0135a20_11": "學士要徑捷理會此事。",
    "X85n1590_003:0135a20_12": "乃彈指一下曰。",
    "X85n1590_003:0135a21_0": "但恁麼薦取。",
    "X85n1590_003:0135a21_1": "公于言下領旨。",
    "X85n1590_003:0135a21_2": "天聖初。",
    "X85n1590_003:0135a21_3": "公守四明。",
    "X85n1590_003:0135a21_4": "以書幣迎師補雪竇。",
    "X85n1590_003:0135a22_5": "既至。",
    "X85n1590_003:0135a22_6": "公曰。",
    "X85n1590_003:0135a22_7": "某近與清長老。",
    "X85n1590_003:0135a22_8": "商量趙州勘婆子話。",
    "X85n1590_003:0135a23_9": "未審端的有勘破處也無。",
    "X85n1590_003:0135a23_10": "覺曰。",
    "X85n1590_003:0135a23_11": "清長老道個甚麼。",
    "X85n1590_003:0135a24_12": "公曰。",
    "X85n1590_003:0135a24_13": "又與麼去也。",
    "X85n1590_003:0135a24_14": "覺曰。",
    "X85n1590_003:0135a24_15": "清長老且放過一著。",
    "X85n1590_003:0135b01_0": "學士還知天下衲僧出者婆子圈[袖-由+貴]不得麼。",
    "X85n1590_003:0135b01_1": "公曰。",
    "X85n1590_003:0135b01_2": "者裏別有個道處。",
    "X85n1590_003:0135b02_3": "趙州若不勘破婆子。",
    "X85n1590_003:0135b02_4": "一生受屈。",
    "X85n1590_003:0135b02_5": "覺曰。",
    "X85n1590_003:0135b03_0": "勘破了也。",
    "X85n1590_003:0135b03_1": "公大笑。",
    "X85n1590_003:0135b04_0": "延慶榮法嗣",
    "X85n1590_003:0135b05_0": "廬山圓通居訥祖印禪師梓州蹇氏子。",
    "X85n1590_003:0135b05_1": "生而英特。",
    "X85n1590_003:0135b05_2": "讀書過目成誦。",
    "X85n1590_003:0135b06_3": "十一出家。",
    "X85n1590_003:0135b06_4": "十七試法華得度。",
    "X85n1590_003:0135b06_5": "受具後肄業講肆。",
    "X85n1590_003:0135b07_6": "耆年多下之。",
    "X85n1590_003:0135b07_7": "會禪者南遊回。",
    "X85n1590_003:0135b07_8": "力勉其行。",
    "X85n1590_003:0135b07_9": "于是徧參荊楚間。",
    "X85n1590_003:0135b08_10": "迄無所得。",
    "X85n1590_003:0135b08_11": "至襄州洞山。",
    "X85n1590_003:0135b08_12": "留止十年。",
    "X85n1590_003:0135b08_13": "因讀華嚴論有省。",
    "X85n1590_003:0135b09_14": "後遊廬山。",
    "X85n1590_003:0135b09_15": "道價日起。",
    "X85n1590_003:0135b09_16": "由歸宗而遷圓通。",
    "X85n1590_003:0135b10_0": "仁廟聞其名。",
    "X85n1590_003:0135b10_1": "皇祐初。",
    "X85n1590_003:0135b10_2": "詔住十方淨因禪院。",
    "X85n1590_003:0135b10_3": "師稱目疾不能奉詔。",
    "X85n1590_003:0135b11_4": "有旨令舉自代。",
    "X85n1590_003:0135b11_5": "遂舉大覺璉應詔。",
    "X85n1590_003:0135b11_6": "及引對。",
    "X85n1590_003:0135b12_0": "問佛法大意。",
    "X85n1590_003:0135b12_1": "稱旨。",
    "X85n1590_003:0135b12_2": "天下賢師知人也。",
    "X85n1590_003:0135b12_3": "僧問。",
    "X85n1590_003:0135b12_4": "祖剎重興時如何。",
    "X85n1590_003:0135b13_5": "師曰。",
    "X85n1590_003:0135b13_6": "人在破頭山。",
    "X85n1590_003:0135b13_7": "曰一朝權在手。",
    "X85n1590_003:0135b13_8": "師便打。",
    "X85n1590_003:0135b14_0": "梁山岩法嗣",
    "X85n1590_003:0135b15_0": "鼎州梁山善冀禪師僧問。",
    "X85n1590_003:0135b15_1": "撥塵見佛時如何。",
    "X85n1590_003:0135b15_2": "師曰。",
    "X85n1590_003:0135b15_3": "莫眼華。",
    "X85n1590_003:0135b16_4": "問和尚幾時成佛。",
    "X85n1590_003:0135b16_5": "師曰。",
    "X85n1590_003:0135b16_6": "且莫壓良為賤。",
    "X85n1590_003:0135b16_7": "曰為甚麼不肯承當。",
    "X85n1590_003:0135b17_8": "師曰。",
    "X85n1590_003:0135b17_9": "好事不如無。",
    "X85n1590_003:0135b17_10": "師頌魯祖面壁曰。",
    "X85n1590_003:0135b17_11": "魯祖三昧最省力。",
    "X85n1590_003:0135b18_12": "纔見僧來便面壁。",
    "X85n1590_003:0135b18_13": "若是知心達道人。",
    "X85n1590_003:0135b19_0": "不在揚眉便相悉。",
    "X85n1590_003:0135b20_0": "大鑒下第十二世",
    "X85n1590_003:0135b21_0": "琅琊覺法嗣",
    "X85n1590_003:0135b22_0": "江州歸宗可宣禪師漢州人。",
    "X85n1590_003:0135b22_1": "壯為僧。",
    "X85n1590_003:0135b22_2": "即出峽依琅琊。",
    "X85n1590_003:0135b23_0": "一語忽投。",
    "X85n1590_003:0135b23_1": "羣疑頓息。",
    "X85n1590_003:0135b23_2": "琅琊可之。",
    "X85n1590_003:0135b23_3": "未幾令分座。",
    "X85n1590_003:0135b23_4": "淨空居士郭功甫。",
    "X85n1590_003:0135b24_5": "過門問道。",
    "X85n1590_003:0135b24_6": "與厚。",
    "X85n1590_003:0135b24_7": "及師領歸宗時。",
    "X85n1590_003:0135b24_8": "功甫任南昌尉。",
    "X85n1590_003:0135c01_9": "俄郡守恚師不為禮。",
    "X85n1590_003:0135c01_10": "窘甚。",
    "X85n1590_003:0135c01_11": "遂作書寄功甫曰。",
    "X85n1590_003:0135c01_12": "某世緣尚有六年。",
    "X85n1590_003:0135c02_13": "奈州主抑逼。",
    "X85n1590_003:0135c02_14": "當棄餘喘。",
    "X85n1590_003:0135c02_15": "託生公家。",
    "X85n1590_003:0135c02_16": "願無見阻。",
    "X85n1590_003:0135c03_17": "功甫閱書驚喜。",
    "X85n1590_003:0135c03_18": "且頷之。",
    "X85n1590_003:0135c03_19": "中夜其妻夢間。",
    "X85n1590_003:0135c03_20": "見師入其寢。",
    "X85n1590_003:0135c04_21": "失聲曰。",
    "X85n1590_003:0135c04_22": "此不是和尚來處。",
    "X85n1590_003:0135c04_23": "功甫撼而問之。",
    "X85n1590_003:0135c04_24": "妻詳以告。",
    "X85n1590_003:0135c05_25": "呼燈取書示之。",
    "X85n1590_003:0135c05_26": "相笑不已。",
    "X85n1590_003:0135c05_27": "遂孕。",
    "X85n1590_003:0135c05_28": "及生乃名宣老。",
    "X85n1590_003:0135c06_29": "期年記問如昔。",
    "X85n1590_003:0135c06_30": "至三歲。",
    "X85n1590_003:0135c06_31": "白雲端禪師抵其家。",
    "X85n1590_003:0135c06_32": "始見之曰。",
    "X85n1590_003:0135c07_33": "吾姪來也。",
    "X85n1590_003:0135c07_34": "雲曰。",
    "X85n1590_003:0135c07_35": "與和尚相別幾年。",
    "X85n1590_003:0135c07_36": "宣倒指曰。",
    "X85n1590_003:0135c07_37": "四年矣。",
    "X85n1590_003:0135c08_38": "雲曰。",
    "X85n1590_003:0135c08_39": "甚處相別。",
    "X85n1590_003:0135c08_40": "曰白蓮莊上。",
    "X85n1590_003:0135c08_41": "雲曰。",
    "X85n1590_003:0135c08_42": "以何為驗。",
    "X85n1590_003:0135c08_43": "曰爹爹媽媽明日請和尚齋。",
    "X85n1590_003:0135c09_44": "忽聞推車聲。",
    "X85n1590_003:0135c09_45": "雲問。",
    "X85n1590_003:0135c09_46": "門外是甚麼聲。",
    "X85n1590_003:0135c10_47": "宣以手作推車勢。",
    "X85n1590_003:0135c10_48": "雲曰。",
    "X85n1590_003:0135c10_49": "過後如何。",
    "X85n1590_003:0135c10_50": "曰平地兩條渠。",
    "X85n1590_003:0135c11_51": "果六周無疾而逝。",
    "X85n1590_003:0135c12_0": "浮山遠法嗣",
    "X85n1590_003:0135c13_0": "荊門軍玉泉謂芳禪師僧問。",
    "X85n1590_003:0135c13_1": "從上諸聖。",
    "X85n1590_003:0135c13_2": "以何法示人。",
    "X85n1590_003:0135c14_0": "師拈起拄杖。",
    "X85n1590_003:0135c14_1": "僧曰。",
    "X85n1590_003:0135c14_2": "學人不會。",
    "X85n1590_003:0135c14_3": "師曰。",
    "X85n1590_003:0135c14_4": "兩手分付。",
    "X85n1590_003:0135c14_5": "僧擬議。",
    "X85n1590_003:0135c15_0": "師便打。",
    "X85n1590_003:0135c16_0": "稱心倧法嗣",
    "X85n1590_003:0135c17_0": "彭州慧日堯禪師僧問。",
    "X85n1590_003:0135c17_1": "古者道。",
    "X85n1590_003:0135c17_2": "我有一句。",
    "X85n1590_003:0135c17_3": "待無舌人解語。",
    "X85n1590_003:0135c18_4": "却向汝道。",
    "X85n1590_003:0135c18_5": "未審意旨如何。",
    "X85n1590_003:0135c18_6": "師曰。",
    "X85n1590_003:0135c18_7": "無影樹下好商量。",
    "X85n1590_003:0135c19_8": "僧禮拜。",
    "X85n1590_003:0135c19_9": "師曰。",
    "X85n1590_003:0135c19_10": "瓦解冰消。",
    "X85n1590_003:0135c20_0": "大鑒下第十三世",
    "X85n1590_003:0135c21_0": "雙峰回法嗣",
    "X85n1590_003:0135c22_0": "閬州光國文贊禪師僧問。",
    "X85n1590_003:0135c22_1": "不二之法。",
    "X85n1590_003:0135c22_2": "請師速道。",
    "X85n1590_003:0135c22_3": "師曰領。",
    "X85n1590_003:0135c23_4": "曰恁麼則人人有分也。",
    "X85n1590_003:0135c23_5": "師曰了。",
    "X85n1590_003:0135c23_6": "曰錦屏天下少。",
    "X85n1590_003:0135c23_7": "光國世間稀。",
    "X85n1590_003:0135c24_8": "師曰退。",
    "X85n1590_003:0136a01_0": "玉泉謂芳法嗣",
    "X85n1590_003:0136a02_0": "安州延福智興禪師西川人。",
    "X85n1590_003:0136a02_1": "出家受具後。",
    "X85n1590_003:0136a02_2": "即造玉泉芳禪師法席。",
    "X85n1590_003:0136a03_3": "發明心地。",
    "X85n1590_003:0136a03_4": "初住漸源。",
    "X85n1590_003:0136a03_5": "次遷黃梅龍華。",
    "X85n1590_003:0136a03_6": "晚住延福。",
    "X85n1590_003:0136a04_7": "師語不談玄。",
    "X85n1590_003:0136a04_8": "行不修潔。",
    "X85n1590_003:0136a04_9": "身不稟儀。",
    "X85n1590_003:0136a04_10": "眾不喜見。",
    "X85n1590_003:0136a05_0": "逝後靈異不測。",
    "X85n1590_003:0136a05_1": "報應如響。",
    "X85n1590_003:0136a05_2": "緇素追仰遺體塐餙。",
    "X85n1590_003:0136a05_3": "祈禱尤盛。",
    "X85n1590_003:0136a07_0": "芙蓉楷法嗣",
    "X85n1590_003:0136a08_0": "鄧州丹霞子淳禪師劍州賈氏子。",
    "X85n1590_003:0136a08_1": "弱冠為僧。",
    "X85n1590_003:0136a08_2": "徹證於芙蓉之室。",
    "X85n1590_003:0136a09_3": "上堂。",
    "X85n1590_003:0136a09_4": "乾坤之內。",
    "X85n1590_003:0136a09_5": "宇宙之間。",
    "X85n1590_003:0136a09_6": "中有一寶。",
    "X85n1590_003:0136a09_7": "秘在形山。",
    "X85n1590_003:0136a10_8": "肇法師恁麼道。",
    "X85n1590_003:0136a10_9": "祇解指蹤話跡。",
    "X85n1590_003:0136a10_10": "且不能拈示於人。",
    "X85n1590_003:0136a11_11": "丹霞今日擘開宇宙。",
    "X85n1590_003:0136a11_12": "打破形山。",
    "X85n1590_003:0136a11_13": "為諸人拈出。",
    "X85n1590_003:0136a11_14": "具眼者辨取。",
    "X85n1590_003:0136a12_15": "以拄杖卓一下曰。",
    "X85n1590_003:0136a12_16": "還見麼。",
    "X85n1590_003:0136a12_17": "鷺鷥立雪非同色。",
    "X85n1590_003:0136a13_0": "明月蘆花不似他。",
    "X85n1590_003:0136a13_1": "上堂。",
    "X85n1590_003:0136a13_2": "舉德山示眾曰。",
    "X85n1590_003:0136a13_3": "我宗無語句。",
    "X85n1590_003:0136a14_0": "實無一法與人。",
    "X85n1590_003:0136a14_1": "德山恁麼說話。",
    "X85n1590_003:0136a14_2": "可謂是祇知入艸求人。",
    "X85n1590_003:0136a15_3": "不覺通身泥水。",
    "X85n1590_003:0136a15_4": "子細觀來。",
    "X85n1590_003:0136a15_5": "祇具一隻眼。",
    "X85n1590_003:0136a15_6": "若是丹霞則不然。",
    "X85n1590_003:0136a16_7": "我宗有語句。",
    "X85n1590_003:0136a16_8": "金刀剪不開。",
    "X85n1590_003:0136a16_9": "深深玄妙旨。",
    "X85n1590_003:0136a16_10": "玉女夜懷胎。",
    "X85n1590_003:0136a17_11": "上堂。",
    "X85n1590_003:0136a17_12": "亭亭日午猶虧半。",
    "X85n1590_003:0136a17_13": "寂寂三更尚未圓。",
    "X85n1590_003:0136a17_14": "六戶不曾知暖意。",
    "X85n1590_003:0136a18_15": "往來常在月明前。",
    "X85n1590_003:0136a18_16": "上堂。",
    "X85n1590_003:0136a18_17": "寶月流輝。",
    "X85n1590_003:0136a18_18": "澄潭布影。",
    "X85n1590_003:0136a19_19": "水無蘸月之意。",
    "X85n1590_003:0136a19_20": "月無分照之心。",
    "X85n1590_003:0136a19_21": "水月兩忘。",
    "X85n1590_003:0136a19_22": "方可稱斷。",
    "X85n1590_003:0136a20_23": "所以道。",
    "X85n1590_003:0136a20_24": "昇天底事直須颺却。",
    "X85n1590_003:0136a20_25": "十成底事直須去却。",
    "X85n1590_003:0136a21_26": "擲地金聲。",
    "X85n1590_003:0136a21_27": "不須回顧。",
    "X85n1590_003:0136a21_28": "若能如是。",
    "X85n1590_003:0136a21_29": "始解向異類中行。",
    "X85n1590_003:0136a22_30": "諸人到者裏。",
    "X85n1590_003:0136a22_31": "還相委悉麼。",
    "X85n1590_003:0136a22_32": "良久曰。",
    "X85n1590_003:0136a22_33": "常行不舉人間步。",
    "X85n1590_003:0136a23_34": "披毛戴角混塵泥。",
    "X85n1590_003:0136a23_35": "僧問。",
    "X85n1590_003:0136a23_36": "牛頭未見四祖時如何。",
    "X85n1590_003:0136a23_37": "師曰。",
    "X85n1590_003:0136a24_38": "金菊乍開蜂競採。",
    "X85n1590_003:0136a24_39": "曰見後如何。",
    "X85n1590_003:0136a24_40": "師曰。",
    "X85n1590_003:0136a24_41": "苗枯花謝了無依。",
    "X85n1590_003:0136b01_42": "宣和己亥春示寂。",
    "X85n1590_003:0136b01_43": "塔全身於洪山之南。",
    "X85n1590_003:0136b02_0": "洪州寶峰闡提惟照禪師簡州李氏子。",
    "X85n1590_003:0136b02_1": "幼超邁而惡俗。",
    "X85n1590_003:0136b03_2": "一日授書。",
    "X85n1590_003:0136b03_3": "至性相近也。",
    "X85n1590_003:0136b03_4": "習相遠也。",
    "X85n1590_003:0136b03_5": "遽曰。",
    "X85n1590_003:0136b03_6": "凡聖本一體。",
    "X85n1590_003:0136b04_7": "以習故差別。",
    "X85n1590_003:0136b04_8": "我知之矣。",
    "X85n1590_003:0136b04_9": "即趯成都。",
    "X85n1590_003:0136b04_10": "師鹿苑清泰處。",
    "X85n1590_003:0136b05_0": "年十九剃染登具。",
    "X85n1590_003:0136b05_1": "泰令聽起信於大慈。",
    "X85n1590_003:0136b05_2": "師輒歸臥。",
    "X85n1590_003:0136b05_3": "泰詰之。",
    "X85n1590_003:0136b06_4": "師曰。",
    "X85n1590_003:0136b06_5": "既稱正信大乘。",
    "X85n1590_003:0136b06_6": "豈言說所能了。",
    "X85n1590_003:0136b06_7": "乃虗心游方。",
    "X85n1590_003:0136b07_8": "謁芙蓉於大洪。",
    "X85n1590_003:0136b07_9": "甞夜坐閣道。",
    "X85n1590_003:0136b07_10": "適風雪震薄。",
    "X85n1590_003:0136b07_11": "聞警盜者傳呼過之。",
    "X85n1590_003:0136b08_12": "隨有所得辭去。",
    "X85n1590_003:0136b08_13": "大觀中。",
    "X85n1590_003:0136b08_14": "芙蓉嬰難。",
    "X85n1590_003:0136b08_15": "師自三吳欲趨沂水。",
    "X85n1590_003:0136b09_16": "僕夫迷道。",
    "X85n1590_003:0136b09_17": "師舉杖擊之。",
    "X85n1590_003:0136b09_18": "忽大悟。",
    "X85n1590_003:0136b09_19": "嘆曰。",
    "X85n1590_003:0136b10_0": "是地非鰲山也邪。",
    "X85n1590_003:0136b10_1": "比至沂。",
    "X85n1590_003:0136b10_2": "芙蓉望而喜曰。",
    "X85n1590_003:0136b10_3": "紹隆吾宗。",
    "X85n1590_003:0136b11_0": "必子數輩矣。",
    "X85n1590_003:0136b11_1": "因留躬耕湖上累年。",
    "X85n1590_003:0136b11_2": "智證成就。",
    "X85n1590_003:0136b11_3": "出領招提。",
    "X85n1590_003:0136b12_4": "遷甘露三祖。",
    "X85n1590_003:0136b12_5": "宣知壬寅。",
    "X85n1590_003:0136b12_6": "詔補圓通。",
    "X85n1590_003:0136b12_7": "棄去。",
    "X85n1590_003:0136b12_8": "復居泐潭。",
    "X85n1590_003:0136b13_0": "上堂。",
    "X85n1590_003:0136b13_1": "古佛道。",
    "X85n1590_003:0136b13_2": "我初成正覺。",
    "X85n1590_003:0136b13_3": "親見大地眾生悉皆成正覺。",
    "X85n1590_003:0136b14_4": "又道。",
    "X85n1590_003:0136b14_5": "深固幽遠。",
    "X85n1590_003:0136b14_6": "無人能到。",
    "X85n1590_003:0136b14_7": "[囗@力]。",
    "X85n1590_003:0136b14_8": "沒見識漢。",
    "X85n1590_003:0136b14_9": "好龍頭蛇尾。",
    "X85n1590_003:0136b15_10": "便下座。",
    "X85n1590_003:0136b15_11": "上堂。",
    "X85n1590_003:0136b15_12": "過去諸佛已入涅槃了也。",
    "X85n1590_003:0136b15_13": "汝等諸人不應追念。",
    "X85n1590_003:0136b16_14": "未來諸佛未出於世。",
    "X85n1590_003:0136b16_15": "汝等諸人不要妄想。",
    "X85n1590_003:0136b17_0": "正當今日。",
    "X85n1590_003:0136b17_1": "你是何人。",
    "X85n1590_003:0136b17_2": "參。",
    "X85n1590_003:0136b17_3": "上堂。",
    "X85n1590_003:0136b17_4": "伯夷隘。",
    "X85n1590_003:0136b17_5": "柳下惠不恭。",
    "X85n1590_003:0136b17_6": "君子不由也。",
    "X85n1590_003:0136b18_7": "二邊不立。",
    "X85n1590_003:0136b18_8": "中道不安時作麼生。",
    "X85n1590_003:0136b18_9": "拈拄杖曰。",
    "X85n1590_003:0136b19_0": "鴛鴦繡出從君看。",
    "X85n1590_003:0136b19_1": "不把金針度與人。",
    "X85n1590_003:0136b19_2": "上堂。",
    "X85n1590_003:0136b19_3": "大陽門下妙唱彌高。",
    "X85n1590_003:0136b20_4": "明月堂前知音葢寡。",
    "X85n1590_003:0136b20_5": "不免舟橫江渚。",
    "X85n1590_003:0136b20_6": "櫂舉清波。",
    "X85n1590_003:0136b21_7": "唱慶堯年。",
    "X85n1590_003:0136b21_8": "和清平樂。",
    "X85n1590_003:0136b21_9": "如斯告報。",
    "X85n1590_003:0136b21_10": "普請承當。",
    "X85n1590_003:0136b21_11": "擬議之間。",
    "X85n1590_003:0136b22_12": "白雲萬里。",
    "X85n1590_003:0136b22_13": "上堂。",
    "X85n1590_003:0136b22_14": "本自不生。",
    "X85n1590_003:0136b22_15": "今亦無滅。",
    "X85n1590_003:0136b22_16": "是死不得底樣子。",
    "X85n1590_003:0136b23_17": "當處出生。",
    "X85n1590_003:0136b23_18": "隨處滅盡。",
    "X85n1590_003:0136b23_19": "是活生受底規模。",
    "X85n1590_003:0136b23_20": "大丈夫漢。",
    "X85n1590_003:0136b24_21": "直須處生死流。",
    "X85n1590_003:0136b24_22": "臥荊棘林。",
    "X85n1590_003:0136b24_23": "俯仰屈伸。",
    "X85n1590_003:0136b24_24": "隨機施設。",
    "X85n1590_003:0136c01_0": "能如是也。",
    "X85n1590_003:0136c01_1": "無量方便。",
    "X85n1590_003:0136c01_2": "莊嚴三昧。",
    "X85n1590_003:0136c01_3": "大解脫門。",
    "X85n1590_003:0136c01_4": "蕩然頓開。",
    "X85n1590_003:0136c02_0": "其或未然。",
    "X85n1590_003:0136c02_1": "無量煩惱。",
    "X85n1590_003:0136c02_2": "一切塵勞。",
    "X85n1590_003:0136c02_3": "嶽立面前。",
    "X85n1590_003:0136c02_4": "塞却古路。",
    "X85n1590_003:0136c03_0": "上堂。",
    "X85n1590_003:0136c03_1": "古人道。",
    "X85n1590_003:0136c03_2": "惰肢體。",
    "X85n1590_003:0136c03_3": "黜聰明。",
    "X85n1590_003:0136c03_4": "離形去智。",
    "X85n1590_003:0136c03_5": "同于大通。",
    "X85n1590_003:0136c03_6": "正當恁麼時。",
    "X85n1590_003:0136c04_7": "且道是甚麼人。",
    "X85n1590_003:0136c04_8": "刪詩書。",
    "X85n1590_003:0136c04_9": "定禮樂。",
    "X85n1590_003:0136c04_10": "還委悉麼。",
    "X85n1590_003:0136c05_0": "禮云禮云。",
    "X85n1590_003:0136c05_1": "玉帛云乎哉。",
    "X85n1590_003:0136c05_2": "樂云樂云。",
    "X85n1590_003:0136c05_3": "鐘鼓云乎哉。",
    "X85n1590_003:0136c05_4": "問承師有言。",
    "X85n1590_003:0136c06_5": "雲黯黯處獨秀峰挺出。",
    "X85n1590_003:0136c06_6": "月朦朧裏泐潭水光生。",
    "X85n1590_003:0136c07_7": "豈不是寶峰境。",
    "X85n1590_003:0136c07_8": "師曰。",
    "X85n1590_003:0136c07_9": "若是寶峰境。",
    "X85n1590_003:0136c07_10": "憑君子細看。",
    "X85n1590_003:0136c07_11": "曰如何是境中人。",
    "X85n1590_003:0136c08_12": "師曰。",
    "X85n1590_003:0136c08_13": "看取令行時。",
    "X85n1590_003:0136c08_14": "曰祇如承言須會宗。",
    "X85n1590_003:0136c09_15": "勿自立規矩。",
    "X85n1590_003:0136c09_16": "如何是和尚宗。",
    "X85n1590_003:0136c09_17": "師曰。",
    "X85n1590_003:0136c09_18": "須知雲外千峰上。",
    "X85n1590_003:0136c10_19": "別有靈松帶露寒。",
    "X85n1590_003:0136c10_20": "值雪。",
    "X85n1590_003:0136c10_21": "僧問。",
    "X85n1590_003:0136c10_22": "祖師西來即不問。",
    "X85n1590_003:0136c10_23": "時節因緣事若何。",
    "X85n1590_003:0136c11_24": "師曰。",
    "X85n1590_003:0136c11_25": "一片兩片三四片。",
    "X85n1590_003:0136c11_26": "落在眼中猶不薦。",
    "X85n1590_003:0136c12_27": "建炎二年正月七日示寂。",
    "X85n1590_003:0136c12_28": "闍維得設利如珠琲。",
    "X85n1590_003:0136c13_0": "舌齒不壞。",
    "X85n1590_003:0136c13_1": "塔于寺之西峯。",
    "X85n1590_003:0136c15_0": "錦江禪燈卷第三"
}