[
    {
        "source_sentence": "佛使比丘迦旃延說法沒盡偈百",
        "from": "T49n2029_001:0009c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十章",
        "from": "T49n2029_001:0009c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人名今附西晉錄",
        "from": "T49n2029_001:0009c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者迦旃子　　體道修律護",
        "from": "T49n2029_001:0009c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見諸卒暴者　　以偈開法路",
        "from": "T49n2029_001:0009c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心常懷愴恨　　思惟悲感事",
        "from": "T49n2029_001:0009c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常勤務精進　　顧後大恐懼",
        "from": "T49n2029_001:0009c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法垂欲滅　　人年纔壽百",
        "from": "T49n2029_001:0009c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法之光明　　在世不久沒",
        "from": "T49n2029_001:0009c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法已滅盡　　比丘眾迷惑",
        "from": "T49n2029_001:0009c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當捨諸經法　　聖覺之所講",
        "from": "T49n2029_001:0010a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反受雜文章　　廢捐佛所說",
        "from": "T49n2029_001:0010a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見訓諸淺經　　心意為欣悅",
        "from": "T49n2029_001:0010a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常當共諍訟　　違教背典經",
        "from": "T49n2029_001:0010a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉興誹謗　　各各相慢輕",
        "from": "T49n2029_001:0010a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡課難化　　無智如株杌",
        "from": "T49n2029_001:0010a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卿無所別知　　不學佛正法",
        "from": "T49n2029_001:0010a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋置經義理　　更互相求短",
        "from": "T49n2029_001:0010a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾身所聞傳　　獨步無儔伴",
        "from": "T49n2029_001:0010a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持中以著下　　舉下著於中",
        "from": "T49n2029_001:0010a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復識次第　　所說貴不窮",
        "from": "T49n2029_001:0010a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證處設乖謬　　反說無本末",
        "from": "T49n2029_001:0010a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞受皆浮漫　　講論無清話",
        "from": "T49n2029_001:0010a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯徒眾惡意　　謗訕於和上",
        "from": "T49n2029_001:0010a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見尊覩師父　　傲慢不崇敬",
        "from": "T49n2029_001:0010a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是等共辯諍　　心念甚愁毒",
        "from": "T49n2029_001:0010a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著世慕豪貴　　墮縛不自覺",
        "from": "T49n2029_001:0010a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我覺甚真諦　　卿誠無所知",
        "from": "T49n2029_001:0010a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卿講殊倒錯　　我言順典義",
        "from": "T49n2029_001:0010a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各共諍訟　　用生毒害心",
        "from": "T49n2029_001:0010a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪得利供養　　隨俗共浮沈",
        "from": "T49n2029_001:0010a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習樂於居屋　　不能自拔度",
        "from": "T49n2029_001:0010a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從貪共談語　　但說世間務",
        "from": "T49n2029_001:0010a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸比丘捨　　樹間及閑暇",
        "from": "T49n2029_001:0010a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行止於聚落　　兩中立精舍",
        "from": "T49n2029_001:0010a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜樂於憒擾　　不慕處靜默",
        "from": "T49n2029_001:0010a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉相侵欺　　以自養妻息",
        "from": "T49n2029_001:0010a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有時比丘　　客從遠方來",
        "from": "T49n2029_001:0010a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺主先自安　　閑居乃聽之",
        "from": "T49n2029_001:0010a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妬其所止居　　嫉其有德名",
        "from": "T49n2029_001:0010b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦嫉於族姓　　又復希法經",
        "from": "T49n2029_001:0010b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見遠方比丘　　顏色不悅和",
        "from": "T49n2029_001:0010b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其捨之去　　於心乃為快",
        "from": "T49n2029_001:0010b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪著於供養　　用興毒惡嫉",
        "from": "T49n2029_001:0010b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矜莊相貢高　　由是成忿失",
        "from": "T49n2029_001:0010b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常念瞋恚惡　　憍慢為自大",
        "from": "T49n2029_001:0010b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求無厭足　　恣意隨塵穢",
        "from": "T49n2029_001:0010b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒事不應行　　不欲誦受經",
        "from": "T49n2029_001:0010b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日笑歌舞　　冥暮寢不醒",
        "from": "T49n2029_001:0010b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯等共聚會　　言不及經理",
        "from": "T49n2029_001:0010b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但說縣官賊　　流俗行來事",
        "from": "T49n2029_001:0010b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有學者　　眾人所供養",
        "from": "T49n2029_001:0010b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羨者求出家　　言學比丘法",
        "from": "T49n2029_001:0010b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有學者　　白衣所崇敬",
        "from": "T49n2029_001:0010b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務於雜碎事　　因是得名聞",
        "from": "T49n2029_001:0010b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所行不如教　　自從利養起",
        "from": "T49n2029_001:0010b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其年既幼少　　多畜眾弟子",
        "from": "T49n2029_001:0010b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心懷諍亂　　不能究所學",
        "from": "T49n2029_001:0010b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門二三年　　廣畜諸眷屬",
        "from": "T49n2029_001:0010b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫能謹慎戒　　墮落於邪見",
        "from": "T49n2029_001:0010b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有說斷滅　　或有講有人",
        "from": "T49n2029_001:0010b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已住如是學　　墮惡人鬚髮",
        "from": "T49n2029_001:0010b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門徒多鄙猥　　少年相圍繞",
        "from": "T49n2029_001:0010b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時甚枯旱　　或時復大水",
        "from": "T49n2029_001:0010b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雀鼠及蝗虫　　災害並輻至",
        "from": "T49n2029_001:0010b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五穀普罄匱　　民庶咸飢饉",
        "from": "T49n2029_001:0010b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮逼於餬口　　出家求安隱",
        "from": "T49n2029_001:0010b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便行作沙門　　不調越軌度",
        "from": "T49n2029_001:0010b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不解於禁戒　　眾會無救護",
        "from": "T49n2029_001:0010c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟且無羞恥　　不能修慎行",
        "from": "T49n2029_001:0010c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不樂法會　　汲汲著財養",
        "from": "T49n2029_001:0010c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以非法為法　　所說違道義",
        "from": "T49n2029_001:0010c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉罪反輕重　　亂經背賢規",
        "from": "T49n2029_001:0010c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集會至夜半　　鬪諍事彌滋",
        "from": "T49n2029_001:0010c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後乃說經　　粗略不周備",
        "from": "T49n2029_001:0010c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希簡說禁戒　　具足鬪諍事",
        "from": "T49n2029_001:0010c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處處失義理　　故正法滅盡",
        "from": "T49n2029_001:0010c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適共鬪諍已　　遂乃結仇怨",
        "from": "T49n2029_001:0010c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸魔及官屬　　用斯得人便",
        "from": "T49n2029_001:0010c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天龍鬼神　　來欲聽經教",
        "from": "T49n2029_001:0010c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傾企遲聞戒　　但更聞諍訟",
        "from": "T49n2029_001:0010c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天人懷恨　　不可比丘行",
        "from": "T49n2029_001:0010c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行來共講言　　佛法欲滅盡",
        "from": "T49n2029_001:0010c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾等捨天樂　　故來欲受法",
        "from": "T49n2029_001:0010c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得聞正法　　不如棄之去",
        "from": "T49n2029_001:0010c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有尊鬼神　　心樂佛法者",
        "from": "T49n2029_001:0010c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不念諸比丘　　不復行擁護",
        "from": "T49n2029_001:0010c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時弊鬼神　　凶暴行毒害",
        "from": "T49n2029_001:0010c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取比丘精氣　　令命無有餘",
        "from": "T49n2029_001:0010c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘多疾病　　羸劣無氣力",
        "from": "T49n2029_001:0010c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失神顏色變　　勤苦遭眾厄",
        "from": "T49n2029_001:0010c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉相憎嫉　　疾病不相瞻",
        "from": "T49n2029_001:0010c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有至死亡　　無護橫夭終",
        "from": "T49n2029_001:0010c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪著利財寶　　衣食無限節",
        "from": "T49n2029_001:0010c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曉知習俗法　　邪業以自活",
        "from": "T49n2029_001:0010c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "販賣規賈利　　出入求生息",
        "from": "T49n2029_001:0010c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志尚在總務　　孜孜無解極",
        "from": "T49n2029_001:0010c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂於雜碎事　　求利欲救命",
        "from": "T49n2029_001:0011a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄捐度世業　　細務自嬰累",
        "from": "T49n2029_001:0011a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣服不整齊　　儀節不閑修",
        "from": "T49n2029_001:0011a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能將順行　　如野馬獼猴",
        "from": "T49n2029_001:0011a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙見賢比丘　　分衛知止足",
        "from": "T49n2029_001:0011a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠遠罵詈之　　言不順禁戒",
        "from": "T49n2029_001:0011a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今日比丘　　澹然無過失",
        "from": "T49n2029_001:0011a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時諸比丘　　默聲犯眾惡",
        "from": "T49n2029_001:0011a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偷苟無羞慚　　懈怠懷毒意",
        "from": "T49n2029_001:0011a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯等將來世　　反當見敬事",
        "from": "T49n2029_001:0011a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有仁賢比丘　　具足知廉恥",
        "from": "T49n2029_001:0011a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼失法時　　乃更不見待",
        "from": "T49n2029_001:0011a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如師子王　　處在林樹間",
        "from": "T49n2029_001:0011a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豺狼及犬狐　　不敢食其肉",
        "from": "T49n2029_001:0011a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命過身出虫　　還自噉其肉",
        "from": "T49n2029_001:0011a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜共噉食　　毀滅其形體",
        "from": "T49n2029_001:0011a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能仁大聖人　　泥洹滅度後",
        "from": "T49n2029_001:0011a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸地水火風　　不能毀佛法",
        "from": "T49n2029_001:0011a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間珍奇寶　　不妄忽自亡",
        "from": "T49n2029_001:0011a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒼金出於世　　紫金乃不彰",
        "from": "T49n2029_001:0011a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法在於世　　終不自沒盡",
        "from": "T49n2029_001:0011a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因有象法故　　正法則滅盡",
        "from": "T49n2029_001:0011a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如海中船　　貪重故沈沒",
        "from": "T49n2029_001:0011a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法斯亦然　　利養故滅盡",
        "from": "T49n2029_001:0011a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "背經及聖典　　以此為正法",
        "from": "T49n2029_001:0011a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法違於律　　以非作法義",
        "from": "T49n2029_001:0011a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸邪見異學　　五通諸學士",
        "from": "T49n2029_001:0011a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能毀法義　　及所興布施",
        "from": "T49n2029_001:0011a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其從釋迦文　　因佛作沙門",
        "from": "T49n2029_001:0011a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當毀於正法　　令法至滅盡",
        "from": "T49n2029_001:0011b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計劣諸男子　　除髮被袈裟",
        "from": "T49n2029_001:0011b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當敗正法　　令典沒不現",
        "from": "T49n2029_001:0011b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不肯順禁教　　勠力存法務",
        "from": "T49n2029_001:0011b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恣心從所樂　　猶如塵蔽驢",
        "from": "T49n2029_001:0011b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時諸學人　　受取妄保任",
        "from": "T49n2029_001:0011b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改定其券別　　令錯所寄信",
        "from": "T49n2029_001:0011b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏於縣官吏　　怨賊及債主",
        "from": "T49n2029_001:0011b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戰戰相惡難　　恐怖衣毛竪",
        "from": "T49n2029_001:0011b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耕種及治生　　遭值諸吏卒",
        "from": "T49n2029_001:0011b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝夕習穢欲　　眾患所見惱",
        "from": "T49n2029_001:0011b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將有三惡王　　大秦在於前",
        "from": "T49n2029_001:0011b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撥羅在於後　　安息在中央",
        "from": "T49n2029_001:0011b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由於是之故　　正法有棄亡",
        "from": "T49n2029_001:0011b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夷王大凶惡　　處在於北方",
        "from": "T49n2029_001:0011b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興師伐惡國　　傷害諸萬民",
        "from": "T49n2029_001:0011b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輕毀諸沙門　　多犯於眾惡",
        "from": "T49n2029_001:0011b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀壞佛塔寺　　破敗學精廬",
        "from": "T49n2029_001:0011b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於爾時世　　郡國皆丘墟",
        "from": "T49n2029_001:0011b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是等皆恐懼　　愁憂而懊惱",
        "from": "T49n2029_001:0011b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨其北方土　　奔趣于中國",
        "from": "T49n2029_001:0011b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病瘦目不明　　尫瘵無氣力",
        "from": "T49n2029_001:0011b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能捨北方　　當為其所賊",
        "from": "T49n2029_001:0011b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時少年比丘　　不務沙門者",
        "from": "T49n2029_001:0011b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便當脫衣服　　恐怖欲自全",
        "from": "T49n2029_001:0011b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是中國君　　當來伐夷王",
        "from": "T49n2029_001:0011b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既已誅夷王　　來還居監尼",
        "from": "T49n2029_001:0011b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有尊比丘　　名號曰尸師",
        "from": "T49n2029_001:0011b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "博聞靡不達　　能悅諸國王",
        "from": "T49n2029_001:0011b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王聞尸師言　　心意懷欣躍",
        "from": "T49n2029_001:0011c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願欲請眾僧　　興設大布施",
        "from": "T49n2029_001:0011c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣使詣十方　　宣命於諸國",
        "from": "T49n2029_001:0011c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸人來詣此　　今當大布施",
        "from": "T49n2029_001:0011c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸僧皆集至　　其數有百千",
        "from": "T49n2029_001:0011c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遭難皆憔悴　　願樂見大施",
        "from": "T49n2029_001:0011c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸比丘已會　　百千設備足",
        "from": "T49n2029_001:0011c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉相推求　　各各相問訊",
        "from": "T49n2029_001:0011c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁和上所在　　阿闍梨所至",
        "from": "T49n2029_001:0011c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常所從沙彌　　惡師今所師",
        "from": "T49n2029_001:0011c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或傷或死亡　　或亦見驅逐",
        "from": "T49n2029_001:0011c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘既相見　　啼哭不自勝",
        "from": "T49n2029_001:0011c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時諸會者　　其數百千眾",
        "from": "T49n2029_001:0011c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懷惱失顏色　　樂見大布施",
        "from": "T49n2029_001:0011c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面並雲集　　同會十五日",
        "from": "T49n2029_001:0011c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "講說佛典戒　　尋復相忿懟",
        "from": "T49n2029_001:0011c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯等既忿懟　　展轉不共和",
        "from": "T49n2029_001:0011c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊比丘教告　　諸比丘默然",
        "from": "T49n2029_001:0011c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當說卿等　　示有佛法律",
        "from": "T49n2029_001:0011c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽我之所說　　無得亂語言",
        "from": "T49n2029_001:0011c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計此閻浮地　　沙門佛門徒",
        "from": "T49n2029_001:0011c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會同當共和　　不宜長嫌故",
        "from": "T49n2029_001:0011c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大比丘眾　　其數有百千",
        "from": "T49n2029_001:0011c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得學道義　　往會十五日",
        "from": "T49n2029_001:0011c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大比丘眾　　雖有百千數",
        "from": "T49n2029_001:0011c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我學設明達　　卿等不能知",
        "from": "T49n2029_001:0011c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有一比丘　　學能達悟者",
        "from": "T49n2029_001:0011c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便可說本末　　我學知其經",
        "from": "T49n2029_001:0011c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有一比丘　　所學普通達",
        "from": "T49n2029_001:0011c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有德名須賴　　如是師子吼",
        "from": "T49n2029_001:0012a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時從坐起　　叉手而住立",
        "from": "T49n2029_001:0012a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首耆年足　　便當師子吼",
        "from": "T49n2029_001:0012a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾不懷狐疑　　其心無猶豫",
        "from": "T49n2029_001:0012a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身所學經戒　　今設為通利",
        "from": "T49n2029_001:0012a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾亦無眾難　　心亦不進退",
        "from": "T49n2029_001:0012a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾所前學者　　法律無所疑",
        "from": "T49n2029_001:0012a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通暢於經典　　明達於道義",
        "from": "T49n2029_001:0012a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾所學如此　　諸賢宜奉持",
        "from": "T49n2029_001:0012a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卿不達眾經　　亦不解法律",
        "from": "T49n2029_001:0012a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何尊者前　　而多自稱歎",
        "from": "T49n2029_001:0012a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊師惡弟子　　性凶懷毒害",
        "from": "T49n2029_001:0012a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰阿斯　　即便害須賴",
        "from": "T49n2029_001:0012a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有大鬼神　　信樂於佛法",
        "from": "T49n2029_001:0012a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手自執金剛　　遂打殺阿斯",
        "from": "T49n2029_001:0012a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當于爾時世　　地六反震動",
        "from": "T49n2029_001:0012a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方自然響　　非人擊靈鼓",
        "from": "T49n2029_001:0012a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至爾時四方　　當有四大烟",
        "from": "T49n2029_001:0012a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復四大火　　上方四面墮",
        "from": "T49n2029_001:0012a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於爾之世時　　世間為幽冥",
        "from": "T49n2029_001:0012a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是往不反　　生民沒愚癡",
        "from": "T49n2029_001:0012a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黎庶無央數　　悲哀懷懊惱",
        "from": "T49n2029_001:0012a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日最末世　　佛正法未盡",
        "from": "T49n2029_001:0012a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾見佛鬼神　　信樂於道義",
        "from": "T49n2029_001:0012a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱身自投地　　號躄不自堪",
        "from": "T49n2029_001:0012a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸比丘遭惡　　如人喪二親",
        "from": "T49n2029_001:0012a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日最末世　　佛正法滅盡",
        "from": "T49n2029_001:0012a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從今日以往　　無復說經典",
        "from": "T49n2029_001:0012a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法律及禁戒　　當何從聞聽",
        "from": "T49n2029_001:0012a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天樹木鬼　　曠野居神明",
        "from": "T49n2029_001:0012b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲感心憂惱　　宛轉不自寧",
        "from": "T49n2029_001:0012b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法燈為已沒　　正典已毀滅",
        "from": "T49n2029_001:0012b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今世最崩頹　　法鼓不復鳴",
        "from": "T49n2029_001:0012b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸魔設歡喜　　聚會相慶賀",
        "from": "T49n2029_001:0012b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉手而讚言　　今是佛末世",
        "from": "T49n2029_001:0012b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却後將來世　　當有是患難",
        "from": "T49n2029_001:0012b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益當加精進　　勉力求度脫",
        "from": "T49n2029_001:0012b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有賈客　　失時心懷惱",
        "from": "T49n2029_001:0012b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故宜加慕屬　　無得復後悔",
        "from": "T49n2029_001:0012b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞時道法興　　經典普流布",
        "from": "T49n2029_001:0012b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法者常存　　勤心修佛教",
        "from": "T49n2029_001:0012b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日四輩人　　展轉相恭敬",
        "from": "T49n2029_001:0012b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛法尚在　　夙宵加精進",
        "from": "T49n2029_001:0012b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身體自康強　　未遭老病死",
        "from": "T49n2029_001:0012b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以故當慇懃　　念後大危懼",
        "from": "T49n2029_001:0012b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及時諸國安　　無有眾患難",
        "from": "T49n2029_001:0012b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豐熟乞易得　　奉修佛教禁",
        "from": "T49n2029_001:0012b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門解羅剎　　聞是法教戒",
        "from": "T49n2029_001:0012b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前稽首作禮　　耆年迦旃子",
        "from": "T49n2029_001:0012b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟吾身戰慄　　毛竪心為寒",
        "from": "T49n2029_001:0012b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失志不知法　　不復識方面",
        "from": "T49n2029_001:0012b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今我聞此言　　心生大恐懼",
        "from": "T49n2029_001:0012b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將來世見此　　安能心不碎",
        "from": "T49n2029_001:0012b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者迦旃子　　興此悲哀已",
        "from": "T49n2029_001:0012b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為諸弟子　　說正法未盡",
        "from": "T49n2029_001:0012b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三百歲多解脫　　三百歲聞戒定",
        "from": "T49n2029_001:0012b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三百歲修佛寺　　入千年青苑說",
        "from": "T49n2029_001:0012b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說比丘樂無樂　　習獨處床席居",
        "from": "T49n2029_001:0012b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於彼行無方　　當降伏諸愛欲",
        "from": "T49n2029_001:0012c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛使比丘迦旃延說法沒盡偈百二十章",
        "from": "T49n2029_001:0012c02_100",
        "context_with_next_sentence": false
    }
]