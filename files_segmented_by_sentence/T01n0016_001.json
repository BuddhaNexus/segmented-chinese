[
    {
        "source_sentence": "佛說尸迦羅越六方禮經",
        "from": "T01n0016_001:0250c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後漢安息國三藏安世高譯",
        "from": "T01n0016_001:0250c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛在王舍國鷄山中。時，有長者子，名尸迦羅",
        "from": "T01n0016_001:0250c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越，早起嚴頭，洗浴著文衣，東向四拜、南向四拜、西向四拜、北向四拜、向天四拜、向地四拜。",
        "from": "T01n0016_001:0250c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛入國分衛遙見之，往到其家問之：",
        "from": "T01n0016_001:0250c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「何為六向拜？",
        "from": "T01n0016_001:0250c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此應何法？",
        "from": "T01n0016_001:0250c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」尸迦羅越言：",
        "from": "T01n0016_001:0250c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「父在時教我六向拜，不知何應？",
        "from": "T01n0016_001:0250c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今父喪亡，不敢於後違之。",
        "from": "T01n0016_001:0250c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T01n0016_001:0250c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「父教汝使六向拜，不以身拜。",
        "from": "T01n0016_001:0250c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」尸迦羅越便長跪言：",
        "from": "T01n0016_001:0250c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「願佛為我解此六向拜意。",
        "from": "T01n0016_001:0250c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T01n0016_001:0250c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「聽之，內著心中。",
        "from": "T01n0016_001:0250c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有長者𭶑人能持四戒不犯者，今世為人所敬，後世生天上。",
        "from": "T01n0016_001:0250c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者不殺諸群生、二者不盜、三者不愛他人婦女、四者不妄言兩舌。",
        "from": "T01n0016_001:0250c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心欲貪婬、恚怒、愚癡，自制勿聽。",
        "from": "T01n0016_001:0250c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能制此四意者，惡名日聞，如月盡時光明稍冥。",
        "from": "T01n0016_001:0250c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能自制惡意者，如月初生其光稍明，至十五日盛滿時也。",
        "from": "T01n0016_001:0250c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T01n0016_001:0250c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復有六事，錢財日耗減。",
        "from": "T01n0016_001:0250c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者喜飲酒；",
        "from": "T01n0016_001:0250c29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者喜博掩；",
        "from": "T01n0016_001:0251a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者喜早臥晚起；",
        "from": "T01n0016_001:0251a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者喜請客，亦欲令人請之；",
        "from": "T01n0016_001:0251a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者喜與惡知識相隨；",
        "from": "T01n0016_001:0251a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者憍慢輕人。",
        "from": "T01n0016_001:0251a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯上頭四惡，復行是六事，妨其善行，亦不得憂治生，錢財日耗減，六向拜當何益乎？",
        "from": "T01n0016_001:0251a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T01n0016_001:0251a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「惡知識有四輩：",
        "from": "T01n0016_001:0251a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者內有怨心，外強為知識；",
        "from": "T01n0016_001:0251a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者於人前好言語，背後說言惡；",
        "from": "T01n0016_001:0251a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者有急時，於人前愁苦，背後歡喜；",
        "from": "T01n0016_001:0251a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者外如親厚，內興怨謀。",
        "from": "T01n0016_001:0251a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知識亦有四輩：",
        "from": "T01n0016_001:0251a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者外如怨家，內有厚意；",
        "from": "T01n0016_001:0251a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者於人前直諫，於外說人善；",
        "from": "T01n0016_001:0251a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者病瘦縣官，為其征彸憂解之；",
        "from": "T01n0016_001:0251a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者見人貧賤不棄捐，當念求方便欲富之。",
        "from": "T01n0016_001:0251a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡知識復有四輩：",
        "from": "T01n0016_001:0251a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者難諫曉教之作善，故與惡者相隨；",
        "from": "T01n0016_001:0251a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者教之莫與喜酒人為伴，故與嗜酒人相隨；",
        "from": "T01n0016_001:0251a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者教之自守，益更多事；",
        "from": "T01n0016_001:0251a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者教之與賢者為友，故與博掩子為厚。",
        "from": "T01n0016_001:0251a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知識亦有四輩：",
        "from": "T01n0016_001:0251a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者見人貧窮卒乏令治生；",
        "from": "T01n0016_001:0251a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者不與人諍計挍；",
        "from": "T01n0016_001:0251a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者日往消息之；",
        "from": "T01n0016_001:0251a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者坐起當相念。",
        "from": "T01n0016_001:0251a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知識復有四輩：",
        "from": "T01n0016_001:0251a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者為吏所捕，將歸藏匿之，於後解決之；",
        "from": "T01n0016_001:0251a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者有病瘦，將歸養視之；",
        "from": "T01n0016_001:0251a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者知識死亡，棺斂視之；",
        "from": "T01n0016_001:0251a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者知識已死，復念其家。",
        "from": "T01n0016_001:0251a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知識復有四輩：",
        "from": "T01n0016_001:0251a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者欲鬪，止之；",
        "from": "T01n0016_001:0251a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者欲隨惡知識，諫止之；",
        "from": "T01n0016_001:0251a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者不欲治生，勸令治生；",
        "from": "T01n0016_001:0251a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者不喜經道，教令信喜之。",
        "from": "T01n0016_001:0251a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡知識復有四輩：",
        "from": "T01n0016_001:0251a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者小侵之便大怒；",
        "from": "T01n0016_001:0251a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者有急倩使之，不肯行；",
        "from": "T01n0016_001:0251a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者見人有急時，避人走；",
        "from": "T01n0016_001:0251a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者見人死亡，棄不視。",
        "from": "T01n0016_001:0251a27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T01n0016_001:0251a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「擇其善者從之，惡者遠離之。",
        "from": "T01n0016_001:0251a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我與善知識相隨，自致成佛。",
        "from": "T01n0016_001:0251a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T01n0016_001:0251b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「東向拜者，謂子事父母，當有五事：",
        "from": "T01n0016_001:0251b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者當念治生；",
        "from": "T01n0016_001:0251b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者早起勅令奴婢，時作飯食；",
        "from": "T01n0016_001:0251b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者不益父母憂；",
        "from": "T01n0016_001:0251b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者當念父母恩；",
        "from": "T01n0016_001:0251b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者父母疾病，當恐懼，求醫師治之。",
        "from": "T01n0016_001:0251b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母視子亦有五事：",
        "from": "T01n0016_001:0251b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者當念令去惡就善；",
        "from": "T01n0016_001:0251b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者當教計書疏；",
        "from": "T01n0016_001:0251b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者當教持經戒；",
        "from": "T01n0016_001:0251b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者當早與娶婦；",
        "from": "T01n0016_001:0251b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者家中所有當給與之。",
        "from": "T01n0016_001:0251b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「南向拜者，謂弟子事師，當有五事：",
        "from": "T01n0016_001:0251b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者當敬難之；",
        "from": "T01n0016_001:0251b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者當念其恩；",
        "from": "T01n0016_001:0251b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者所教隨之；",
        "from": "T01n0016_001:0251b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者思念不厭；",
        "from": "T01n0016_001:0251b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者當從後稱譽之。",
        "from": "T01n0016_001:0251b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師教弟子亦有五事：",
        "from": "T01n0016_001:0251b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者當令疾知；",
        "from": "T01n0016_001:0251b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者當令勝他人弟子；",
        "from": "T01n0016_001:0251b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者欲令知不忘；",
        "from": "T01n0016_001:0251b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者諸疑難悉為解說之；",
        "from": "T01n0016_001:0251b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者欲令弟子智慧勝師。",
        "from": "T01n0016_001:0251b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「西向拜者，謂婦事夫，有五事：",
        "from": "T01n0016_001:0251b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者夫從外來，當起迎之；",
        "from": "T01n0016_001:0251b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者夫出不在，當炊蒸掃除待之；",
        "from": "T01n0016_001:0251b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者不得有婬心於外夫，罵言不得還罵作色；",
        "from": "T01n0016_001:0251b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者當用夫教誡，所有什物不得藏匿；",
        "from": "T01n0016_001:0251b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者夫休息盖藏乃得臥。",
        "from": "T01n0016_001:0251b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫視婦亦有五事：",
        "from": "T01n0016_001:0251b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者出入當敬於婦；",
        "from": "T01n0016_001:0251b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者飯食之，以時節與衣被；",
        "from": "T01n0016_001:0251b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者當給與金銀珠璣；",
        "from": "T01n0016_001:0251b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者家中所有多少，悉用付之；",
        "from": "T01n0016_001:0251b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者不得於外邪畜傳御。",
        "from": "T01n0016_001:0251b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「北向拜者，謂人視親屬朋友，當有五事：",
        "from": "T01n0016_001:0251b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者見之作罪惡，私往於屏處，諫曉呵止之；",
        "from": "T01n0016_001:0251b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者小有急，當奔趣救護之；",
        "from": "T01n0016_001:0251b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者有私語，不得為他人說；",
        "from": "T01n0016_001:0251b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者當相敬難；",
        "from": "T01n0016_001:0251b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者所有好物，當多少分與之。",
        "from": "T01n0016_001:0251b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「向地拜者，謂大夫視奴客婢使，亦有五事：",
        "from": "T01n0016_001:0251b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者當以時飯食與衣被；",
        "from": "T01n0016_001:0251b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者病瘦當為呼醫治之；",
        "from": "T01n0016_001:0251c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者不得妄撾捶之；",
        "from": "T01n0016_001:0251c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者有私財物，不得奪之；",
        "from": "T01n0016_001:0251c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者分付之物當使平等。",
        "from": "T01n0016_001:0251c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奴客婢使事大夫亦有五事：",
        "from": "T01n0016_001:0251c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者當早起，勿令大夫呼；",
        "from": "T01n0016_001:0251c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者所當作，自用心為之；",
        "from": "T01n0016_001:0251c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者當愛惜大夫物，不得棄捐乞匃人；",
        "from": "T01n0016_001:0251c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者大夫出入當送迎之；",
        "from": "T01n0016_001:0251c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者當稱譽大夫善，不得說其惡。",
        "from": "T01n0016_001:0251c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「向天拜者，謂人事沙門道士，當用五事：",
        "from": "T01n0016_001:0251c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者以善心向之；",
        "from": "T01n0016_001:0251c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者擇好言與語；",
        "from": "T01n0016_001:0251c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者以身敬之；",
        "from": "T01n0016_001:0251c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者當戀慕之；",
        "from": "T01n0016_001:0251c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者沙門道士人中之雄，當恭敬承事，問度世之事。",
        "from": "T01n0016_001:0251c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門道士當以六意視凡民：",
        "from": "T01n0016_001:0251c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者教之布施，不得自慳貪；",
        "from": "T01n0016_001:0251c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者教之持戒，不得自犯色；",
        "from": "T01n0016_001:0251c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者教之忍辱，不得自恚怒；",
        "from": "T01n0016_001:0251c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者教之精進，不得自懈慢；",
        "from": "T01n0016_001:0251c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者教人一心，不得自放意；",
        "from": "T01n0016_001:0251c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者教人𭶑慧，不得自愚癡。",
        "from": "T01n0016_001:0251c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門道士教人去惡為善，開示正道，恩大於父母。",
        "from": "T01n0016_001:0251c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是行之，為知汝父在時六向拜之教也，何憂不富乎？",
        "from": "T01n0016_001:0251c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」尸迦羅越即受五戒，作禮而去。",
        "from": "T01n0016_001:0251c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說唄偈：",
        "from": "T01n0016_001:0251c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「鷄鳴當早起，　　被衣來下牀，",
        "from": "T01n0016_001:0251c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澡漱令心淨，　　兩手奉花香。",
        "from": "T01n0016_001:0251c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛尊過諸天，　　鬼神不能當，",
        "from": "T01n0016_001:0251c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "低頭遶塔寺，　　叉手禮十方。",
        "from": "T01n0016_001:0251c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢者不精進，　　譬如樹無根，",
        "from": "T01n0016_001:0251c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根斷枝葉落，　　何時當復連？",
        "from": "T01n0016_001:0251c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採華著日中，　　能有幾時鮮？",
        "from": "T01n0016_001:0251c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放心自縱意，　　命過復何言。",
        "from": "T01n0016_001:0251c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人當慮非常，　　對來無有期，",
        "from": "T01n0016_001:0251c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯過不自覺，　　命過為自欺。",
        "from": "T01n0016_001:0251c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今當入泥犁，　　何時有出期？",
        "from": "T01n0016_001:0252a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢者受佛語，　　持戒慎勿疑。",
        "from": "T01n0016_001:0252a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛如好華樹，　　無不愛樂者，",
        "from": "T01n0016_001:0252a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處處人民聞，　　一切皆歡喜。",
        "from": "T01n0016_001:0252a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我得佛時，　　願使如法王，",
        "from": "T01n0016_001:0252a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過度諸生死，　　無不解脫者。",
        "from": "T01n0016_001:0252a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒德可恃怙，　　福報常隨己，",
        "from": "T01n0016_001:0252a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現法為人長，　　終遠三惡道。",
        "from": "T01n0016_001:0252a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒慎除恐畏，　　福德三界尊，",
        "from": "T01n0016_001:0252a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼神邪毒害，　　不犯有戒人。",
        "from": "T01n0016_001:0252a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮俗生世苦，　　命速如電光，",
        "from": "T01n0016_001:0252a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老病死時至，　　對來無豪強。",
        "from": "T01n0016_001:0252a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無親可恃怙，　　無處可隱藏，",
        "from": "T01n0016_001:0252a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天福尚有盡，　　人命豈久長。",
        "from": "T01n0016_001:0252a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母家室居，　　譬如寄客人，",
        "from": "T01n0016_001:0252a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿命壽以盡，　　捨故當受新。",
        "from": "T01n0016_001:0252a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各追所作行，　　無際如車輪，",
        "from": "T01n0016_001:0252a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起滅從罪福，　　生死十二因。",
        "from": "T01n0016_001:0252a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現身遊免亂，　　濟育一切人，",
        "from": "T01n0016_001:0252a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈傷墜眾邪，　　流沒于深淵。",
        "from": "T01n0016_001:0252a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勉進以六度，　　修行致自然，",
        "from": "T01n0016_001:0252a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故稽首禮，　　歸命天中天。",
        "from": "T01n0016_001:0252a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人身既難得，　　得人復嗜欲，",
        "from": "T01n0016_001:0252a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪婬於意識，　　痛想無厭足。",
        "from": "T01n0016_001:0252a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豫種後世栽，　　歡喜詣地獄，",
        "from": "T01n0016_001:0252a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六情幸完具，　　何為自困辱？",
        "from": "T01n0016_001:0252a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切能正心，　　三世神吉祥，",
        "from": "T01n0016_001:0252a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不與八難貪，　　隨行生十方。",
        "from": "T01n0016_001:0252a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生趣精進，　　六度為橋梁，",
        "from": "T01n0016_001:0252a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣勸無極慧，　　一切蒙神光。",
        "from": "T01n0016_001:0252b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說尸迦羅越六方禮經",
        "from": "T01n0016_001:0252b02_100",
        "context_with_next_sentence": false
    }
]