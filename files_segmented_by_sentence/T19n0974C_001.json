{
    "T19n0974C_001:0386a03_0": "加句靈驗佛頂尊勝陀羅尼記",
    "T19n0974C_001:0386a05_0": "朝議大夫兼侍御史武徹述",
    "T19n0974C_001:0386a06_0": "佛頂尊勝陀羅尼者。",
    "T19n0974C_001:0386a06_1": "一切如來祕密之藏。",
    "T19n0974C_001:0386a06_2": "總持法門。",
    "T19n0974C_001:0386a07_3": "大日如來智印。",
    "T19n0974C_001:0386a07_4": "吉祥善淨。",
    "T19n0974C_001:0386a07_5": "破一切惡道。",
    "T19n0974C_001:0386a08_6": "大神力陀羅尼也。",
    "T19n0974C_001:0386a08_7": "昔儀鳳年中。",
    "T19n0974C_001:0386a08_8": "佛陀波利所傳之本。",
    "T19n0974C_001:0386a09_9": "遍天下幡剎。",
    "T19n0974C_001:0386a09_10": "持誦有多矣。",
    "T19n0974C_001:0386a09_11": "徹自弱歲。",
    "T19n0974C_001:0386a10_12": "則常念持。",
    "T19n0974C_001:0386a10_13": "永泰初。",
    "T19n0974C_001:0386a10_14": "自喪妻之後。",
    "T19n0974C_001:0386a10_15": "倍益精心。",
    "T19n0974C_001:0386a11_16": "求出離法。",
    "T19n0974C_001:0386a11_17": "時有殿中侍御史蔣那者。",
    "T19n0974C_001:0386a11_18": "常持誦此陀羅尼。",
    "T19n0974C_001:0386a12_19": "異日於私室。",
    "T19n0974C_001:0386a12_20": "條然而來曰。",
    "T19n0974C_001:0386a12_21": "今得究竟道。",
    "T19n0974C_001:0386a13_22": "非常難遇。",
    "T19n0974C_001:0386a13_23": "徹敬問之。",
    "T19n0974C_001:0386a13_24": "即尊勝陀羅尼也。",
    "T19n0974C_001:0386a14_25": "命之令誦。",
    "T19n0974C_001:0386a14_26": "而文句全廣。",
    "T19n0974C_001:0386a14_27": "音旨頗異。",
    "T19n0974C_001:0386a14_28": "拜而誦之。",
    "T19n0974C_001:0386a15_29": "乃曰。",
    "T19n0974C_001:0386a15_30": "受之於王開士。",
    "T19n0974C_001:0386a15_31": "開士受之於金剛智三藏。",
    "T19n0974C_001:0386a16_32": "大師云。",
    "T19n0974C_001:0386a16_33": "西國亦希有此本。",
    "T19n0974C_001:0386a16_34": "吾將梵本來。",
    "T19n0974C_001:0386a17_35": "故密授焉。",
    "T19n0974C_001:0386a17_36": "坐中歎奇絕之事而罷。",
    "T19n0974C_001:0386a17_37": "未獲求本。",
    "T19n0974C_001:0386a18_38": "俄而將刑歿世。",
    "T19n0974C_001:0386a18_39": "常懷遺悔。",
    "T19n0974C_001:0386a18_40": "追悔不及。",
    "T19n0974C_001:0386a18_41": "每遇精士。",
    "T19n0974C_001:0386a19_42": "即求問之。",
    "T19n0974C_001:0386a19_43": "冀其萬一。",
    "T19n0974C_001:0386a19_44": "遂遇僧際公。",
    "T19n0974C_001:0386a19_45": "果有此本文。",
    "T19n0974C_001:0386a20_46": "開元中。",
    "T19n0974C_001:0386a20_47": "五臺山下。",
    "T19n0974C_001:0386a20_48": "有一精修居士。",
    "T19n0974C_001:0386a21_0": "姓王。",
    "T19n0974C_001:0386a21_1": "有事遠出行。",
    "T19n0974C_001:0386a21_2": "去後父亡。",
    "T19n0974C_001:0386a21_3": "迴來不見。",
    "T19n0974C_001:0386a21_4": "至心誦尊勝陀羅尼數十萬遍。",
    "T19n0974C_001:0386a22_5": "願知見先考所受生善惡業報。",
    "T19n0974C_001:0386a23_6": "精誠懇願。",
    "T19n0974C_001:0386a23_7": "殊無覺知。",
    "T19n0974C_001:0386a23_8": "遂欲出山。",
    "T19n0974C_001:0386a24_0": "見一老人。",
    "T19n0974C_001:0386a24_1": "謂居士曰。",
    "T19n0974C_001:0386a24_2": "仁者念持。",
    "T19n0974C_001:0386a24_3": "寔為勤敏。",
    "T19n0974C_001:0386a24_4": "然文句多脫略。",
    "T19n0974C_001:0386a25_5": "我今授示全本文句。",
    "T19n0974C_001:0386a25_6": "居士拜而而受之。",
    "T19n0974C_001:0386a26_7": "乃云可誦千遍。",
    "T19n0974C_001:0386a26_8": "殆然經數日。",
    "T19n0974C_001:0386a26_9": "於夜中。",
    "T19n0974C_001:0386a27_10": "忽聞環珮簫管之聲。",
    "T19n0974C_001:0386a27_11": "降自庭宇。",
    "T19n0974C_001:0386a27_12": "此時居士驚起視之。",
    "T19n0974C_001:0386a28_13": "見天人數十輩。",
    "T19n0974C_001:0386a28_14": "共圍繞一天仙。",
    "T19n0974C_001:0386a29_0": "前謂之曰。",
    "T19n0974C_001:0386a29_1": "汝識吾否。",
    "T19n0974C_001:0386a29_2": "居士答曰不知。",
    "T19n0974C_001:0386a29_3": "天仙曰。",
    "T19n0974C_001:0386b01_0": "我是汝父。",
    "T19n0974C_001:0386b01_1": "比年誦持尊勝陀羅尼。",
    "T19n0974C_001:0386b01_2": "吾得爾之福力。",
    "T19n0974C_001:0386b02_3": "然後數月已來。",
    "T19n0974C_001:0386b02_4": "福倍於積歲。",
    "T19n0974C_001:0386b02_5": "不知汝更得何本。",
    "T19n0974C_001:0386b03_6": "以至於斯。",
    "T19n0974C_001:0386b03_7": "吾今以汝之力故。",
    "T19n0974C_001:0386b03_8": "獲為天仙之王。",
    "T19n0974C_001:0386b04_9": "則知汝所持念。",
    "T19n0974C_001:0386b04_10": "功効不可量也。",
    "T19n0974C_001:0386b04_11": "言訖上昇。",
    "T19n0974C_001:0386b05_12": "居士歡躍拜送。",
    "T19n0974C_001:0386b05_13": "自爾尤加精進。",
    "T19n0974C_001:0386b05_14": "後日至東京。",
    "T19n0974C_001:0386b06_15": "有一專修學人王少府者。",
    "T19n0974C_001:0386b06_16": "亦波利尊勝之本。",
    "T19n0974C_001:0386b07_17": "誦持積數數萬。",
    "T19n0974C_001:0386b07_18": "忽於夜中。",
    "T19n0974C_001:0386b07_19": "夢見一梵僧來。",
    "T19n0974C_001:0386b08_20": "謂小府曰。",
    "T19n0974C_001:0386b08_21": "賢者念誦。",
    "T19n0974C_001:0386b08_22": "殊謂精誠。",
    "T19n0974C_001:0386b08_23": "所歎本誤文少。",
    "T19n0974C_001:0386b09_24": "而功薄也。",
    "T19n0974C_001:0386b09_25": "王少府稽首懇請真文。",
    "T19n0974C_001:0386b09_26": "梵僧乃授之以廣本文句。",
    "T19n0974C_001:0386b10_27": "句口授訖。",
    "T19n0974C_001:0386b10_28": "送僧出門。",
    "T19n0974C_001:0386b11_0": "光景如晝迴至床前。",
    "T19n0974C_001:0386b11_1": "視室中僮僕猶臥。",
    "T19n0974C_001:0386b11_2": "忽覺呼而責之。",
    "T19n0974C_001:0386b12_3": "以明矣。",
    "T19n0974C_001:0386b12_4": "僮僕云。",
    "T19n0974C_001:0386b12_5": "今纔夜半。",
    "T19n0974C_001:0386b12_6": "忽然光滅及夕。",
    "T19n0974C_001:0386b13_7": "王少府自異所見。",
    "T19n0974C_001:0386b13_8": "閉目誦之。",
    "T19n0974C_001:0386b13_9": "歷歷清暢。",
    "T19n0974C_001:0386b14_10": "轉益精勤。",
    "T19n0974C_001:0386b14_11": "天寶初五臺山人王居士。",
    "T19n0974C_001:0386b14_12": "及王少府。",
    "T19n0974C_001:0386b15_13": "咸在東都。",
    "T19n0974C_001:0386b15_14": "俱不相識。",
    "T19n0974C_001:0386b15_15": "忽然王少府暴亡。",
    "T19n0974C_001:0386b16_0": "經七日而蘇。",
    "T19n0974C_001:0386b16_1": "城中好事者。",
    "T19n0974C_001:0386b16_2": "盡問其故。",
    "T19n0974C_001:0386b16_3": "居士乃王開士亦同詣問得再生之由。",
    "T19n0974C_001:0386b17_4": "王少府云。",
    "T19n0974C_001:0386b17_5": "吾初臥。",
    "T19n0974C_001:0386b18_6": "忽見二使來云。",
    "T19n0974C_001:0386b18_7": "追逐相隨。",
    "T19n0974C_001:0386b18_8": "行數十里。",
    "T19n0974C_001:0386b18_9": "至一大樹下。",
    "T19n0974C_001:0386b19_10": "二使者憩。",
    "T19n0974C_001:0386b19_11": "吾亦憩之。",
    "T19n0974C_001:0386b19_12": "忽憶尊勝。",
    "T19n0974C_001:0386b19_13": "遂即閉目。",
    "T19n0974C_001:0386b20_14": "誦三七遍。",
    "T19n0974C_001:0386b20_15": "舉目迴視。",
    "T19n0974C_001:0386b20_16": "二使者已不知所之。",
    "T19n0974C_001:0386b21_17": "須臾四人又至。",
    "T19n0974C_001:0386b21_18": "跪而言曰。",
    "T19n0974C_001:0386b21_19": "仁者奚為修行。",
    "T19n0974C_001:0386b22_20": "有此利益。",
    "T19n0974C_001:0386b22_21": "向來追者二使並得生天。",
    "T19n0974C_001:0386b22_22": "王少府曰。",
    "T19n0974C_001:0386b23_23": "吾但誦尊勝陀羅尼。",
    "T19n0974C_001:0386b23_24": "四人曰。",
    "T19n0974C_001:0386b23_25": "唯此功力之故也。",
    "T19n0974C_001:0386b24_26": "請與弟子誦之。",
    "T19n0974C_001:0386b24_27": "救拔苦難。",
    "T19n0974C_001:0386b24_28": "王少府又冥目誦三七遍。",
    "T19n0974C_001:0386b25_29": "開目又不見四人矣。",
    "T19n0974C_001:0386b25_30": "頃刻之際。",
    "T19n0974C_001:0386b26_31": "空中聞戈甲聲。",
    "T19n0974C_001:0386b26_32": "有一神人。",
    "T19n0974C_001:0386b26_33": "紫服被戈甲。",
    "T19n0974C_001:0386b27_0": "儀衛侍從甚盛。",
    "T19n0974C_001:0386b27_1": "前跪而言曰。",
    "T19n0974C_001:0386b27_2": "吾是五道冥司。",
    "T19n0974C_001:0386b28_0": "頗稱貴位。",
    "T19n0974C_001:0386b28_1": "然終為神道所攝。",
    "T19n0974C_001:0386b28_2": "願得生天。",
    "T19n0974C_001:0386b28_3": "彼六人者。",
    "T19n0974C_001:0386b29_4": "以師法力之故。",
    "T19n0974C_001:0386b29_5": "各得生天。",
    "T19n0974C_001:0386b29_6": "今請迃(于音曲迅)步。",
    "T19n0974C_001:0386c01_7": "至弟子所居誦之。",
    "T19n0974C_001:0386c01_8": "冀霑福蔭之餘也。",
    "T19n0974C_001:0386c01_9": "乃相隨至一陂宅。",
    "T19n0974C_001:0386c02_10": "方圓數十里。",
    "T19n0974C_001:0386c02_11": "皆是罪人枷鎖杻械。",
    "T19n0974C_001:0386c03_12": "囚縛決罰。",
    "T19n0974C_001:0386c03_13": "訊問栲椋之所。",
    "T19n0974C_001:0386c03_14": "神令王少府上高座。",
    "T19n0974C_001:0386c04_15": "自於床下。",
    "T19n0974C_001:0386c04_16": "跪而聽之。",
    "T19n0974C_001:0386c04_17": "王少府閉目志之。",
    "T19n0974C_001:0386c05_18": "誦滿四十九遍。",
    "T19n0974C_001:0386c05_19": "舉目四顧。",
    "T19n0974C_001:0386c05_20": "一人不見。",
    "T19n0974C_001:0386c05_21": "唯有斷鎖破杻弊械空枷而已。",
    "T19n0974C_001:0386c06_22": "王少府驚悚。",
    "T19n0974C_001:0386c06_23": "囚知所適忽然有四五人至云。",
    "T19n0974C_001:0386c07_24": "王命速發遣。",
    "T19n0974C_001:0386c07_25": "迴亂我曹。",
    "T19n0974C_001:0386c08_26": "扄文簿破我冥司。",
    "T19n0974C_001:0386c08_27": "遂驅逐王少府令入一空谷中。",
    "T19n0974C_001:0386c09_28": "便蘇息再得生耳。",
    "T19n0974C_001:0386c09_29": "實尊勝陀羅尼不思議之功力也。",
    "T19n0974C_001:0386c10_30": "於是五臺王山人及王開士。",
    "T19n0974C_001:0386c11_31": "與王少府。",
    "T19n0974C_001:0386c11_32": "既同業因。",
    "T19n0974C_001:0386c11_33": "各陳其所持本。",
    "T19n0974C_001:0386c11_34": "勘校文句。",
    "T19n0974C_001:0386c12_35": "多少並同。",
    "T19n0974C_001:0386c12_36": "如一本焉。",
    "T19n0974C_001:0386c12_37": "彼此相慶賀。",
    "T19n0974C_001:0386c12_38": "王山人曰。",
    "T19n0974C_001:0386c13_39": "吾本受之於臺山聖公。",
    "T19n0974C_001:0386c13_40": "王少府曰。",
    "T19n0974C_001:0386c13_41": "吾本受之於神僧。",
    "T19n0974C_001:0386c14_42": "王開士曰。",
    "T19n0974C_001:0386c14_43": "吾本受之於金剛智三藏。",
    "T19n0974C_001:0386c15_44": "梵夾見存。",
    "T19n0974C_001:0386c15_45": "三人懼然。",
    "T19n0974C_001:0386c15_46": "共勘其本。",
    "T19n0974C_001:0386c15_47": "音旨字數如一。",
    "T19n0974C_001:0386c16_48": "故知眾生聞法有時流傳教法。",
    "T19n0974C_001:0386c17_0": "亦有時歎真實世間希有。",
    "T19n0974C_001:0386c17_1": "此即是金剛智三藏梵本譯出者。",
    "T19n0974C_001:0386c18_2": "令勘佛陀波所利傳本。",
    "T19n0974C_001:0386c18_3": "文句大同。",
    "T19n0974C_001:0386c19_4": "多於舊本。",
    "T19n0974C_001:0386c19_5": "九句六十九字。",
    "T19n0974C_001:0386c19_6": "餘悉波利。",
    "T19n0974C_001:0386c19_7": "僧惠琳因修大藏目錄。",
    "T19n0974C_001:0386c20_8": "收未入藏經六百餘卷。",
    "T19n0974C_001:0386c21_0": "并遂略武徹所敘陀羅尼感應神驗。",
    "T19n0974C_001:0386c21_1": "親自勘同。",
    "T19n0974C_001:0386c22_2": "序之卷末。",
    "T19n0974C_001:0386c22_3": "時元和十四年己丑歲。",
    "T19n0974C_001:0386c22_4": "前朝蔣大夫行通事舍人張承福。",
    "T19n0974C_001:0386c23_5": "及百濟僧。",
    "T19n0974C_001:0386c23_6": "各受持尊勝陀羅尼有功。",
    "T19n0974C_001:0386c24_7": "曾為冥司所追。",
    "T19n0974C_001:0386c24_8": "以真言威力不可思議。",
    "T19n0974C_001:0386c25_9": "遂不受諸苦。",
    "T19n0974C_001:0386c25_10": "兼濟拔受苦群生。",
    "T19n0974C_001:0386c26_0": "有傳記。",
    "T19n0974C_001:0386c26_1": "琳於成都府右經藏中得之。",
    "T19n0974C_001:0386c26_2": "時如意二年三月二十三日。",
    "T19n0974C_001:0386c27_3": "佛頂尊勝陀羅尼感應事。",
    "T19n0974C_001:0386c29_0": "開元二十六年冬。",
    "T19n0974C_001:0386c29_1": "有神都張繹長史。",
    "T19n0974C_001:0386c29_2": "自小孝養父母。",
    "T19n0974C_001:0387a01_3": "父母歿後。",
    "T19n0974C_001:0387a01_4": "沈淪惡道。",
    "T19n0974C_001:0387a01_5": "乃虔心報恩。",
    "T19n0974C_001:0387a02_6": "每懷濟度。",
    "T19n0974C_001:0387a02_7": "遂即入山。",
    "T19n0974C_001:0387a02_8": "持尊勝陀羅尼。",
    "T19n0974C_001:0387a03_0": "志願見亡父母。",
    "T19n0974C_001:0387a03_1": "得安樂處。",
    "T19n0974C_001:0387a03_2": "日夜勤誦。",
    "T19n0974C_001:0387a03_3": "聲聲不絕。",
    "T19n0974C_001:0387a04_4": "朝暮懇誠。",
    "T19n0974C_001:0387a04_5": "六年念之。",
    "T19n0974C_001:0387a04_6": "念中不曾見父母。",
    "T19n0974C_001:0387a05_7": "疑呪無驗。",
    "T19n0974C_001:0387a05_8": "欲生退心。",
    "T19n0974C_001:0387a05_9": "忽見一老翁儀容甚異。",
    "T19n0974C_001:0387a06_10": "語云。",
    "T19n0974C_001:0387a06_11": "非是呪無靈驗。",
    "T19n0974C_001:0387a06_12": "亦非君不盡心。",
    "T19n0974C_001:0387a07_0": "斯乃去聖時遙。",
    "T19n0974C_001:0387a07_1": "翻譯多誤。",
    "T19n0974C_001:0387a07_2": "呪詞脫略。",
    "T19n0974C_001:0387a07_3": "遂失其徵。",
    "T19n0974C_001:0387a08_4": "老人即口授。",
    "T19n0974C_001:0387a08_5": "令抄錄一本。",
    "T19n0974C_001:0387a08_6": "依此文句持誦。",
    "T19n0974C_001:0387a09_7": "期滿七日。",
    "T19n0974C_001:0387a09_8": "必當見父。",
    "T19n0974C_001:0387a09_9": "即依老人口訣。",
    "T19n0974C_001:0387a10_0": "至心禮拜。",
    "T19n0974C_001:0387a10_1": "舉頭失老人。",
    "T19n0974C_001:0387a10_2": "不知所在。",
    "T19n0974C_001:0387a10_3": "方賢聖耶。",
    "T19n0974C_001:0387a11_4": "情乃驚愕。",
    "T19n0974C_001:0387a11_5": "倍更虔誠。",
    "T19n0974C_001:0387a11_6": "具依所教文本。",
    "T19n0974C_001:0387a11_7": "專心誦持。",
    "T19n0974C_001:0387a12_8": "始登六日。",
    "T19n0974C_001:0387a12_9": "即亡父母遂來。",
    "T19n0974C_001:0387a12_10": "恩愛未絕。",
    "T19n0974C_001:0387a13_11": "拘頭悲喜。",
    "T19n0974C_001:0387a13_12": "幽明感會。",
    "T19n0974C_001:0387a13_13": "情各愴然。",
    "T19n0974C_001:0387a13_14": "口云。",
    "T19n0974C_001:0387a14_15": "墮大地獄中。",
    "T19n0974C_001:0387a14_16": "備遭諸苦。",
    "T19n0974C_001:0387a14_17": "年月已深。",
    "T19n0974C_001:0387a14_18": "乘兒精誠功力。",
    "T19n0974C_001:0387a15_19": "近得生天。",
    "T19n0974C_001:0387a15_20": "今從上界下來。",
    "T19n0974C_001:0387a15_21": "與汝相見。",
    "T19n0974C_001:0387a16_22": "威光稍別。",
    "T19n0974C_001:0387a16_23": "示相由存。",
    "T19n0974C_001:0387a16_24": "具述因緣。",
    "T19n0974C_001:0387a16_25": "宛如平昔。",
    "T19n0974C_001:0387a17_26": "凡是人孝之子。",
    "T19n0974C_001:0387a17_27": "覩此感應。",
    "T19n0974C_001:0387a17_28": "豈不留心聖教耶。",
    "T19n0974C_001:0387a18_29": "但虛膓畐心。",
    "T19n0974C_001:0387a18_30": "縱恣六情。",
    "T19n0974C_001:0387a18_31": "追歡遊樂。",
    "T19n0974C_001:0387a19_0": "有何益焉。",
    "T19n0974C_001:0387a19_1": "況目連釋子救母之事。",
    "T19n0974C_001:0387a19_2": "具在聖文。",
    "T19n0974C_001:0387a20_3": "長史至誠有此感效也。",
    "T19n0974C_001:0387a20_4": "後有僧傳得誦念舍利。",
    "T19n0974C_001:0387a21_5": "境界極多。",
    "T19n0974C_001:0387a21_6": "來至東都。",
    "T19n0974C_001:0387a21_7": "具戴靈事。",
    "T19n0974C_001:0387a21_8": "頗為為人所知。",
    "T19n0974C_001:0387a22_9": "後有好事者。",
    "T19n0974C_001:0387a22_10": "請各流傳。",
    "T19n0974C_001:0387a22_11": "即釋門弟子。",
    "T19n0974C_001:0387a23_12": "也長慶三年四月中旬。",
    "T19n0974C_001:0387a23_13": "前奉天縣尉馬敭秋滿。",
    "T19n0974C_001:0387a24_14": "移歸[卄/補]坂。",
    "T19n0974C_001:0387a24_15": "住東城石子坊舊第。",
    "T19n0974C_001:0387a25_16": "持波利尊勝之本。",
    "T19n0974C_001:0387a25_17": "一十五年。",
    "T19n0974C_001:0387a25_18": "未甞墮慢。",
    "T19n0974C_001:0387a26_19": "及到[卄/補]坂。",
    "T19n0974C_001:0387a26_20": "經數月。",
    "T19n0974C_001:0387a26_21": "忽然夢見一神人被甲。",
    "T19n0974C_001:0387a27_22": "狀貌甚異。",
    "T19n0974C_001:0387a27_23": "云汝既精心持此真言。",
    "T19n0974C_001:0387a27_24": "何不詣景福寺東廊坊。",
    "T19n0974C_001:0387a28_25": "一持念僧。",
    "T19n0974C_001:0387a28_26": "有尊勝靈驗本。",
    "T19n0974C_001:0387a29_27": "持之功九倍常。",
    "T19n0974C_001:0387a29_28": "言訖驚覺。",
    "T19n0974C_001:0387a29_29": "汗流透衣。",
    "T19n0974C_001:0387a29_30": "明日便專詣寺尋僧。",
    "T19n0974C_001:0387b01_31": "數日方遇。",
    "T19n0974C_001:0387b01_32": "僧法名義[卄/追]。",
    "T19n0974C_001:0387b02_0": "既見問之。",
    "T19n0974C_001:0387b02_1": "此僧果久精心此門。",
    "T19n0974C_001:0387b02_2": "遠近依止。",
    "T19n0974C_001:0387b03_0": "僧問曰。",
    "T19n0974C_001:0387b03_1": "有何事相覓。",
    "T19n0974C_001:0387b03_2": "坐訖。",
    "T19n0974C_001:0387b03_3": "乃話所夢之事。",
    "T19n0974C_001:0387b04_0": "[卄/追]曰大奇大奇。",
    "T19n0974C_001:0387b04_1": "畜此本來無人知解。",
    "T19n0974C_001:0387b04_2": "少公今日蒙神人指示。",
    "T19n0974C_001:0387b05_3": "[卄/追]焉敢恡惜。",
    "T19n0974C_001:0387b05_4": "乃命弟子出篋取至。",
    "T19n0974C_001:0387b06_5": "真實教傳受。",
    "T19n0974C_001:0387b06_6": "將歸。",
    "T19n0974C_001:0387b06_7": "勘舊所持波利本。",
    "T19n0974C_001:0387b07_8": "方知文句脫略。",
    "T19n0974C_001:0387b07_9": "便依法修行新本。",
    "T19n0974C_001:0387b07_10": "其神驗頗異。",
    "T19n0974C_001:0387b08_11": "兼更傳尊勝瑜伽兩卷。",
    "T19n0974C_001:0387b08_12": "乃知聖教分明。",
    "T19n0974C_001:0387b09_13": "作有法度。",
    "T19n0974C_001:0387b09_14": "不可任其凡智也。",
    "T19n0974C_001:0387b09_15": "因錄記之。",
    "T19n0974C_001:0387b10_16": "傳同志者。",
    "T19n0974C_001:0387b13_0": "佛頂尊勝陀羅尼",
