[
    {
        "source_sentence": "佛說宿命智陀羅尼經",
        "from": "T21n1383_001:0904b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1383_001:0904b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1383_001:0904b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告阿難言。",
        "from": "T21n1383_001:0904b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有陀羅尼名宿命智。",
        "from": "T21n1383_001:0904b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生聞是陀羅尼。",
        "from": "T21n1383_001:0904b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能志心受持者。",
        "from": "T21n1383_001:0904b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有千劫之中極重罪業皆悉消滅。",
        "from": "T21n1383_001:0904b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能終身不間斷者。",
        "from": "T21n1383_001:0904b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人於七俱胝生常知宿命。",
        "from": "T21n1383_001:0904b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1383_001:0904b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨引囉怛那二合室詰泥去聲呼下同一怛他引誐多引野二阿囉曷二合帝引三藐訖三二合沒馱引野三怛𭔞他引四唵引囉怛泥二合囉怛泥二合五蘇囉怛泥二合六囉怛努二合引訥婆二合味引七摩賀引囉怛那二合枳囉尼去聲八囉怛那二合三婆味引娑嚩二合引賀引九爾時阿難聞佛宣說。",
        "from": "T21n1383_001:0904b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生得宿命智陀羅尼已。",
        "from": "T21n1383_001:0904b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎未曾有歡喜無量。",
        "from": "T21n1383_001:0904b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以頭頂禮佛而退。",
        "from": "T21n1383_001:0904b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說宿命智陀羅尼經􄖩􄗭􄗽􅑈􄙤􄑎􄖯􄕗􄕤􄑘􄕘􄗲􅟓􄕝􄙺􄢦􅂴􈎭􇧺􄗱􄕗􄟯􄕤􇩂􄗽􅑎􇥗􈂼􄗽􅑎􄗽􅑐􇪮􄙜􄗥􄚩􄗽􅑈􄑂􄗽􄕍􄗽􅑈􄚦􄗙􄙜􇩉􄚩",
        "from": "T21n1383_001:0904b26_100",
        "context_with_next_sentence": false
    }
]