[
    {
        "source_sentence": "佛三身讚西土賢聖撰",
        "from": "T32n1678_001:0757b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿",
        "from": "T32n1678_001:0757b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卿明教大師臣法賢奉　詔譯",
        "from": "T32n1678_001:0757b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今稽首法身佛，　　無喻難思普遍智，",
        "from": "T32n1678_001:0757b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充滿法界無罣礙，　　湛然寂靜無等等，",
        "from": "T32n1678_001:0757b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非有非無性真實，　　亦非多少離數量，",
        "from": "T32n1678_001:0757b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等無相若虛空，　　福利自他亦如是。",
        "from": "T32n1678_001:0757b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今稽首報身佛，　　湛然安住大牟尼，",
        "from": "T32n1678_001:0757b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀愍化度菩薩眾，　　處會如日而普照，",
        "from": "T32n1678_001:0757b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三祇積集諸功德，　　始能圓滿寂靜道，",
        "from": "T32n1678_001:0757b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大音聲談妙法，　　普令獲得平等果。",
        "from": "T32n1678_001:0757b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今稽首化身佛，　　菩提樹下成正覺，",
        "from": "T32n1678_001:0757c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或起變現或寂靜，　　或復往化於十方，",
        "from": "T32n1678_001:0757c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或轉法輪於鹿苑，　　或現大光如火聚，",
        "from": "T32n1678_001:0757c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三塗苦報悉能除，　　三界無比大牟尼。",
        "from": "T32n1678_001:0757c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是佛身無漏智，　　我常信解淨三業，",
        "from": "T32n1678_001:0757c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無量慧大福行，　　一心垂愍諸群生，",
        "from": "T32n1678_001:0757c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以今頌讚三身佛，　　所獲無漏功德種，",
        "from": "T32n1678_001:0757c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我速證佛菩提，　　盡引眾生歸正道。",
        "from": "T32n1678_001:0757c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛三身讚",
        "from": "T32n1678_001:0757c10_100",
        "context_with_next_sentence": false
    }
]