[
    {
        "source_sentence": "菩提資糧論卷第二",
        "from": "T32n1660_002:0521c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者龍樹本　比丘自在釋",
        "from": "T32n1660_002:0521c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大隋南印度三藏達磨笈多譯",
        "from": "T32n1660_002:0521c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問：",
        "from": "T32n1660_002:0521c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已解釋忍波羅蜜，今應說精進波羅蜜。",
        "from": "T32n1660_002:0521c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答：",
        "from": "T32n1660_002:0521c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇健體相、勇健作業等，是為精進。",
        "from": "T32n1660_002:0521c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中諸菩薩等，從初發心乃至究竟覺場，建立一切菩提分相應身口意善業，此名精進波羅蜜。",
        "from": "T32n1660_002:0521c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復若與諸凡夫及學無學聲聞獨覺等不共精進，此名精進波羅蜜。",
        "from": "T32n1660_002:0521c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進有三種，謂身、口、意。",
        "from": "T32n1660_002:0521c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼身口精進，以心精進而為前行，略說有三種福事。",
        "from": "T32n1660_002:0521c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若身與福事相應，是身精進。",
        "from": "T32n1660_002:0521c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若口與相應，是口精進。",
        "from": "T32n1660_002:0521c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若意與相應，是意精進。",
        "from": "T32n1660_002:0521c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於若自利、若利他善中身健行，是身精進。",
        "from": "T32n1660_002:0521c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口健行是口精進，意健行是心精進。",
        "from": "T32n1660_002:0521c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有三十二種菩薩精進，謂不斷三寶種精進；",
        "from": "T32n1660_002:0521c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成熟無量眾生精進；",
        "from": "T32n1660_002:0521c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝受無量流轉精進；",
        "from": "T32n1660_002:0521c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量供養給侍精進；",
        "from": "T32n1660_002:0521c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聚集無量善根精進；",
        "from": "T32n1660_002:0521c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生無量精進精進；",
        "from": "T32n1660_002:0522a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善說令眾生歡喜精進；",
        "from": "T32n1660_002:0522a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安隱一切眾生精進；",
        "from": "T32n1660_002:0522a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨諸眾生所作精進；",
        "from": "T32n1660_002:0522a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸眾生中行捨精進；",
        "from": "T32n1660_002:0522a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸戒學精進；",
        "from": "T32n1660_002:0522a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍力調柔精進；",
        "from": "T32n1660_002:0522a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生諸禪那、三摩提、三摩鉢帝精進；",
        "from": "T32n1660_002:0522a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿足無著智慧精進；",
        "from": "T32n1660_002:0522a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就四梵行精進；",
        "from": "T32n1660_002:0522a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生五神通精進；",
        "from": "T32n1660_002:0522a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切佛土功德成己佛土精進；",
        "from": "T32n1660_002:0522a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏諸魔精進；",
        "from": "T32n1660_002:0522a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法降伏諸外論師精進；",
        "from": "T32n1660_002:0522a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿足十力、無畏等佛法精進；",
        "from": "T32n1660_002:0522a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴身口意精進；",
        "from": "T32n1660_002:0522a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得度諸有所作精進；",
        "from": "T32n1660_002:0522a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "害諸煩惱精進；",
        "from": "T32n1660_002:0522a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未度者令度、未脫者令脫、未穌息者令穌息、未涅槃者令涅槃精進；",
        "from": "T32n1660_002:0522a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聚集百福相資糧精進；",
        "from": "T32n1660_002:0522a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝受一切佛法精進；",
        "from": "T32n1660_002:0522a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊無邊佛土精進；",
        "from": "T32n1660_002:0522a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見無量諸佛精進。",
        "from": "T32n1660_002:0522a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸精進從大悲出，離身口意故，住不取不捨故，得不舉不下故，攝不生不起故。",
        "from": "T32n1660_002:0522a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等三十二法具足已，精進波羅蜜當得清淨滿足。",
        "from": "T32n1660_002:0522a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中亦有聖頌：",
        "from": "T32n1660_002:0522a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸施等波羅蜜，　　精進之力所成就，",
        "from": "T32n1660_002:0522a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故精進為根本，　　諸菩薩等得佛身。",
        "from": "T32n1660_002:0522a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進方便求菩提，　　我念精進勝方便，",
        "from": "T32n1660_002:0522a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其捨離精進已，　　方便不能作所作。",
        "from": "T32n1660_002:0522a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若唯獨有一方便，　　則無策勤作事業，",
        "from": "T32n1660_002:0522a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作皆是精進作，　　是故精進勝方便。",
        "from": "T32n1660_002:0522a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心有巧力為方便，　　此心從於精進生，",
        "from": "T32n1660_002:0522a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故諸有所作事，　　皆以精進為根本。",
        "from": "T32n1660_002:0522a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸論及以工巧等，　　具精進故到彼岸，",
        "from": "T32n1660_002:0522a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故於諸所作中，　　精進最為成就者。",
        "from": "T32n1660_002:0522a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有自在及財物，　　精進之人則能得，",
        "from": "T32n1660_002:0522a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故諸有安樂事，　　皆以精進為得因。",
        "from": "T32n1660_002:0522a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以有殊勝精進故，　　佛於聲聞為上首，",
        "from": "T32n1660_002:0522a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故此之精進力，　　最為勝因非餘行。",
        "from": "T32n1660_002:0522b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝上精進勇健者，　　於地地中雖同地，",
        "from": "T32n1660_002:0522b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼恒得最勝上，　　是故常應起精進。",
        "from": "T32n1660_002:0522b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛在菩提樹下時，　　以精進故覺菩提，",
        "from": "T32n1660_002:0522b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故精進為根本，　　得佛身因前已說。",
        "from": "T32n1660_002:0522b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問：",
        "from": "T32n1660_002:0522b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已略解釋精進波羅蜜，今應說禪那波羅蜜。",
        "from": "T32n1660_002:0522b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答：",
        "from": "T32n1660_002:0522b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪那者，有四種禪那，謂有覺有觀離生喜樂遊於初禪；",
        "from": "T32n1660_002:0522b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無覺無觀定生喜樂遊第二禪；",
        "from": "T32n1660_002:0522b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離喜行捨念慧受樂遊第三禪；",
        "from": "T32n1660_002:0522b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅於苦樂捨念清淨不苦不樂遊第四禪。",
        "from": "T32n1660_002:0522b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此四種禪那中，離證聲聞獨覺地、迴向佛地已，得名禪那波羅蜜。",
        "from": "T32n1660_002:0522b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩有十六種禪那波羅蜜，諸聲聞獨覺之所無有。",
        "from": "T32n1660_002:0522b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者十六種？",
        "from": "T32n1660_002:0522b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂不取實禪、不著味禪、大悲攀緣禪、三摩地迴轉禪、起作神通禪、心堪能禪、諸三摩鉢帝禪、寂靜復寂靜禪、不可動禪、離惡對禪、入智慧禪、隨眾生心行禪、三寶種不斷禪、不退墮禪、一切法自在禪、破散禪。",
        "from": "T32n1660_002:0522b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等十六種，是為禪那波羅蜜。",
        "from": "T32n1660_002:0522b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不取實禪者，為滿足如來禪故。",
        "from": "T32n1660_002:0522b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不著味禪者，不貪自樂故。",
        "from": "T32n1660_002:0522b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲攀緣禪者，示現斷諸眾生煩惱方便故。",
        "from": "T32n1660_002:0522b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩地迴轉禪者，攀緣欲界為緣故。",
        "from": "T32n1660_002:0522b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起作神通禪者，欲知一切眾生心行故。",
        "from": "T32n1660_002:0522b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心堪能禪者，成就心自在智故。",
        "from": "T32n1660_002:0522b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸三摩鉢帝禪者，勝出諸色無色界故。",
        "from": "T32n1660_002:0522b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜復寂靜禪者，勝出諸聲聞獨覺三摩鉢帝故。",
        "from": "T32n1660_002:0522b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可動禪者，究竟後邊故。",
        "from": "T32n1660_002:0522b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離惡對禪者，害諸熏習相續故。",
        "from": "T32n1660_002:0522b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入智慧禪者，出諸世間故。",
        "from": "T32n1660_002:0522b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨眾生心行禪者，度諸眾生故。",
        "from": "T32n1660_002:0522b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三寶種不斷禪者，如來禪無盡故。",
        "from": "T32n1660_002:0522c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不退墮禪者，常入定故。",
        "from": "T32n1660_002:0522c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法自在禪者，諸業滿足故第十六破散禪本闕，不解。",
        "from": "T32n1660_002:0522c02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又念淨、慧淨、趣淨、慚淨、持心希望淨、迴向菩提淨、根淨、無依淨、不取實淨、起作神通淨、心堪能淨、身遠離淨、內寂靜淨、外不行淨、有所得見淨、無眾生無命無人淨、三界中不住淨、覺分門淨、離翳光明淨、入智慧淨、因果不相違淨、業思惟忍淨、開胞藏相智淨、攝方便前巧淨、菩提場障礙淨、不著聲聞獨覺淨、安住禪那出生光明淨、佛三摩地不散亂淨、觀自心行淨、知諸眾生各各根如應說法淨本闕二淨。",
        "from": "T32n1660_002:0522c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼十六種禪那波羅蜜，由此三十二淨故得清淨，得入如來地。",
        "from": "T32n1660_002:0522c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中有輸盧迦：",
        "from": "T32n1660_002:0522c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼十六種，　　及三十二淨，",
        "from": "T32n1660_002:0522c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與禪度相應，　　是為求菩提。",
        "from": "T32n1660_002:0522c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到禪那彼岸，　　善知禪那業，",
        "from": "T32n1660_002:0522c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者五神通，　　出生不退墮。",
        "from": "T32n1660_002:0522c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸色無有盡，　　通達其實性，",
        "from": "T32n1660_002:0522c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以勝天眼，　　普見諸色相。",
        "from": "T32n1660_002:0522c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖以淨天耳，　　遠聞諸音聲，",
        "from": "T32n1660_002:0522c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者通達知，　　聲非可言說。",
        "from": "T32n1660_002:0522c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有眾生心，　　觀其各各相，",
        "from": "T32n1660_002:0522c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸心猶如幻，　　了知其自性。",
        "from": "T32n1660_002:0522c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生宿世住，　　如實能念知，",
        "from": "T32n1660_002:0522c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法無過去，　　亦知其自性。",
        "from": "T32n1660_002:0522c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣俱知土，　　見土具莊嚴，",
        "from": "T32n1660_002:0522c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土相如虛空，　　了知其實性。",
        "from": "T32n1660_002:0522c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生諸煩惱，　　皆以亂心生，",
        "from": "T32n1660_002:0522c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故勝智者，　　曠修諸禪定。",
        "from": "T32n1660_002:0522c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問：",
        "from": "T32n1660_002:0523a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所解釋禪那波羅蜜者略說已竟，今應次第說般若波羅蜜。",
        "from": "T32n1660_002:0523a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答：",
        "from": "T32n1660_002:0523a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若波羅蜜者，如前解釋，為初資糧中說。",
        "from": "T32n1660_002:0523a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今更釋其相。",
        "from": "T32n1660_002:0523a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如先偈說：",
        "from": "T32n1660_002:0523a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施戒忍進定，　　此五種之餘，",
        "from": "T32n1660_002:0523a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸波羅蜜，　　智度之所攝。",
        "from": "T32n1660_002:0523a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此餘有四波羅蜜，謂巧方便波羅蜜、願波羅蜜、力波羅蜜、智波羅蜜等。",
        "from": "T32n1660_002:0523a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此四波羅蜜，皆是般若波羅蜜所攝。",
        "from": "T32n1660_002:0523a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若波羅蜜者，若佛世尊於菩提樹下，以一念相應智覺了諸法，是般若波羅蜜。",
        "from": "T32n1660_002:0523a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又是無礙相，以無身故。",
        "from": "T32n1660_002:0523a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊相，等虛空故。",
        "from": "T32n1660_002:0523a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無等等相，諸法無所得故。",
        "from": "T32n1660_002:0523a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離相，畢竟空故。",
        "from": "T32n1660_002:0523a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可降伏相，無可得故。",
        "from": "T32n1660_002:0523a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無句相，無名身故。",
        "from": "T32n1660_002:0523a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無聚合相，離來去故。",
        "from": "T32n1660_002:0523a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無因相，離作者故。",
        "from": "T32n1660_002:0523a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生相，生無有故。",
        "from": "T32n1660_002:0523a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無去至相，離流轉故。",
        "from": "T32n1660_002:0523a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無散壞相，離前後際故。",
        "from": "T32n1660_002:0523a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無染相，不可取故。",
        "from": "T32n1660_002:0523a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無戲論相，離諸戲論故。",
        "from": "T32n1660_002:0523a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無動相，法界自體故。",
        "from": "T32n1660_002:0523a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無起相，不分別故。",
        "from": "T32n1660_002:0523a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量相，離量故。",
        "from": "T32n1660_002:0523a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無依止相，依止無有故。",
        "from": "T32n1660_002:0523a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無污相，不出生故。",
        "from": "T32n1660_002:0523a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可測相，無邊際故。",
        "from": "T32n1660_002:0523a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然相，知諸法自性故。",
        "from": "T32n1660_002:0523a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又般若波羅蜜是聞慧相及正思入。",
        "from": "T32n1660_002:0523a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼聞慧相有八十種，謂樂欲等。",
        "from": "T32n1660_002:0523a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正思入有三十二種，謂安住奢摩他等。",
        "from": "T32n1660_002:0523a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又般若波羅蜜不與十六種宿住等無明俱。",
        "from": "T32n1660_002:0523a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等般若波羅蜜相隨量已說，若具說者乃有無量。",
        "from": "T32n1660_002:0523a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此般若波羅蜜所攝方便善巧波羅蜜中，有八種善巧，所謂眾善巧、界善巧、入善巧、諦善巧、緣生善巧、三世善巧、諸乘善巧、諸法善巧。",
        "from": "T32n1660_002:0523a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中善巧波羅蜜無有邊際。",
        "from": "T32n1660_002:0523a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復隨於何等生趣，以何等行相，為菩提故，得自增長善根及調伏眾生。",
        "from": "T32n1660_002:0523b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼彼生趣彼彼行中，此一切處凡所應作種種方便，諸大人等所分別說，我今說彼經中微滴之分。",
        "from": "T32n1660_002:0523b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若已作今作微少之善，能令多多能令無量，此為方便。",
        "from": "T32n1660_002:0523b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不自為己唯為眾生，此為方便。",
        "from": "T32n1660_002:0523b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯以陀那令諸波羅蜜滿足，此為方便。",
        "from": "T32n1660_002:0523b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是以尸羅攝諸生處，以羼提莊嚴身口心，為於菩提，以毘梨耶安住精進，以禪那不退於禪，以般若捨離無為，以慈為作依護，以悲不棄流轉，以喜能忍不喜樂事，以捨發起諸善，以天眼攝取佛眼，以天耳滿足佛耳，以他心智知各各根，以宿住念知三世無礙，以自在通得如來自在通，以入眾生心欲知諸行相，已度還入，無染而染、捨擔更擔，無量示量、最勝現劣，以方便故涅槃相應而墮在流轉，雖行涅槃不畢竟寂滅，現行四魔而超過諸魔，達四諦智及觀無生而不入正位，雖行憒閙而不行順眠煩惱，雖行遠離而不依身心盡，雖行三界而於界中不行世諦，雖行於空而一切時恒求佛法，雖行無為而不於無為作證，雖行六通而不盡漏，雖現聲聞獨覺威儀而不捨樂欲佛法。",
        "from": "T32n1660_002:0523b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等巧方便波羅蜜中所有教化眾生方便，彼等方便是菩薩教化巧方便住處應知。",
        "from": "T32n1660_002:0523b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中有輸盧迦：",
        "from": "T32n1660_002:0523b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畜生道中諸苦惱，　　地獄餓鬼生亦然，",
        "from": "T32n1660_002:0523b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於流轉中相應受，　　眾生種種諸過惡。",
        "from": "T32n1660_002:0523b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等苦聚不能障，　　於眾生處起哀愍，",
        "from": "T32n1660_002:0523b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛便說彼菩薩，　　一切世間無礙悲。",
        "from": "T32n1660_002:0523b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論中若有善該綜，　　眾多別人所作業，",
        "from": "T32n1660_002:0523c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "工巧等明及餘事，　　皆以愛語授與之。",
        "from": "T32n1660_002:0523c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒財聞修寂調等，　　以此功德攝化他，",
        "from": "T32n1660_002:0523c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝已復令常相續，　　勝仙說為住善道。",
        "from": "T32n1660_002:0523c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現女身化男子，　　令其調伏而受教，",
        "from": "T32n1660_002:0523c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現男身化女人，　　令其調伏而受教。",
        "from": "T32n1660_002:0523c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不厭於染境樂，　　愍其無道令入道，",
        "from": "T32n1660_002:0523c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨眾生門種種化，　　極逼惱處亦不捨。",
        "from": "T32n1660_002:0523c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有信解於無我，　　及知諸法離自性，",
        "from": "T32n1660_002:0523c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人未離世間法，　　但作如此觀察轉。",
        "from": "T32n1660_002:0523c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於業及果生信順，　　而有無邊諸苦事，",
        "from": "T32n1660_002:0523c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於受彼苦果時，　　不喜諸苦所逼切。",
        "from": "T32n1660_002:0523c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於聲聞出家者，　　便置安隱寂靜處，",
        "from": "T32n1660_002:0523c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復置於緣覺道，　　或置十種妙力乘，",
        "from": "T32n1660_002:0523c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其當得正覺乘，　　或得寂靜及天趣，",
        "from": "T32n1660_002:0523c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若應觀察現見果，　　如其所作正安置。",
        "from": "T32n1660_002:0523c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是從初至究竟，　　丈夫難事皆能為，",
        "from": "T32n1660_002:0523c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依彼種種巧方便，　　捨離一切愛不愛。",
        "from": "T32n1660_002:0523c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此乘諸佛所讚歎，　　百千功德而莊嚴，",
        "from": "T32n1660_002:0523c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能生世間極淨信，　　以說勝妙善道故。",
        "from": "T32n1660_002:0523c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於緣覺乘聲聞乘，　　及以天世諸乘中，",
        "from": "T32n1660_002:0523c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以十善而成熟，　　亦於人乘成熟人。",
        "from": "T32n1660_002:0523c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已解釋巧方便波羅蜜，我今當說願波羅蜜。",
        "from": "T32n1660_002:0523c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩最初有十大願，所謂供養給侍諸佛無餘，是第一大願。",
        "from": "T32n1660_002:0523c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼佛所持大正法，攝受正覺普護正教，是第二大願。",
        "from": "T32n1660_002:0523c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸世界中諸佛出興，始從住兜率宮，乃至退墮入胎、住胎、初生、出家、證正覺、請轉法輪、入大涅槃，皆往其所受行供養初不捨離，是第三大願。",
        "from": "T32n1660_002:0523c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩行曠大無量，不雜諸波羅蜜所攝善淨諸地，出生總分別分同相異相共轉不共轉等諸菩薩行，如實如地道說，修治波羅蜜教誡教授，授已住持，發起出生如是等心，是第四大願。",
        "from": "T32n1660_002:0524a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無餘眾生界，有色無色、有想無想、卵生胎生濕生化生，三界同入六趣共居，諸生順去名色所攝，無餘眾生界皆悉成熟，令入佛法，斷除諸趣，安立於一切智智，是第五大願。",
        "from": "T32n1660_002:0524a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無餘諸世界曠大無量，若細若麁、若橫若倒、若平住等，同入共居，順去十方分分猶如帝網，入於分分以智順行，是第六大願。",
        "from": "T32n1660_002:0524a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切土即一土、一土即一切土，平等清淨無量國土普皆莊嚴，離諸煩惱淨道具足，無量智相眾生充滿，入佛上妙境界，隨眾生心示現令其歡喜，是第七大願。",
        "from": "T32n1660_002:0524a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為與諸菩薩同一心故，為不共善根聚集故，為與諸菩薩同一攀緣常不離菩薩平等故，為發起自心入如來威神故，為得不退行神通故，為遊行諸世界故，為影到諸大眾論故，為自身順入諸生處故，為具足不思議大乘故，為行菩薩行故，是第八大願。",
        "from": "T32n1660_002:0524a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為昇不退轉行菩薩行故，為身口意業不空故，即於見時令決定佛法故，為即出一音聲時令入智慧故，為即於信時令轉煩惱故，為得如大藥王身故，為行諸菩薩行故，是第九大願。",
        "from": "T32n1660_002:0524a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於諸世界中正覺阿耨多羅三藐三菩提故，為於一毛道中及餘一切毛道中皆現出生、坐道場、轉法輪、大般涅槃故，為以智慧入佛大境界威神故，為於一切眾生界如其深心佛應出時開悟令得寂靜而示現故，為正覺一法一切法悉涅槃相故，為出一音聲令諸眾生心歡喜故，為現大涅槃而不斷行力故，為現大智慧地安立諸法故，為以佛境界法智神通普遍諸世界故，是第十大願。",
        "from": "T32n1660_002:0524b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等大欲大出生，十大願為首。",
        "from": "T32n1660_002:0524b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿此十大願已，建立菩薩阿僧祇百千餘願，得住菩薩歡喜地，此名願波羅蜜。",
        "from": "T32n1660_002:0524b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已解釋願波羅蜜，我今當說力波羅蜜。",
        "from": "T32n1660_002:0524b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中略說諸菩薩有七種力，謂福報生力、神通力、信力、精進力、念力、三摩提力、般若力。",
        "from": "T32n1660_002:0524b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福報生力者，如十小象力當一龍象力，十龍象力當一香象力，十香象力當一大香象力，十大香象力當一大力士力，十大力士力當一半那羅延力，十半那羅延力當一那羅延力，十那羅延力當一大那羅延力，十大那羅延力當一過百劫菩薩力，十過百劫菩薩力當一過百千劫菩薩力，十過百千劫菩薩力當一得忍菩薩力，十得忍菩薩力當一最後生菩薩力。",
        "from": "T32n1660_002:0524b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住此力已，菩薩即於生時能行七步。",
        "from": "T32n1660_002:0524b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十最後生菩薩生時力，乃當菩薩少年時力。",
        "from": "T32n1660_002:0524b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩住此力已，趣菩提場成等正覺。",
        "from": "T32n1660_002:0524b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得正覺已，以過百千功德力故，成就如來正遍知一種處非處力。",
        "from": "T32n1660_002:0524b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等十力成就，此名諸佛菩薩及餘少分眾生福報生力。",
        "from": "T32n1660_002:0524b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通力者，謂四神足善修多作已，以此希有神通力故，得調伏諸眾生等。",
        "from": "T32n1660_002:0524b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼以希有神力，顯現若色若力、若住持等。",
        "from": "T32n1660_002:0524b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸眾生應以此色像得調伏者，即以此色像於彼彼眾生所示現，或佛色像、或獨覺色像、或聲聞色像，如是或釋梵護世、轉輪王等色像，若復諸餘色像，乃至畜生色像。",
        "from": "T32n1660_002:0524c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為調伏眾生故，示現如是色像。",
        "from": "T32n1660_002:0524c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有多力憍慢瞋怒兇惡自高眾生，應以此力得調伏者，即現此力，或大力士力、或四分那羅延力、或半那羅延力、或一那羅延力。",
        "from": "T32n1660_002:0524c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此力故，須彌山王高十六萬八千踰闍那、寬八萬四千踰闍那，以三指舉取，如舉菴摩勒果，擲置他方世界，而四天王天及三十三天等無所嬈惱，於菩薩力亦不減損。",
        "from": "T32n1660_002:0524c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此三千大千世界雖復寬曠，從於水界乃至有頂，置之手掌經劫而住。",
        "from": "T32n1660_002:0524c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸神通道具足示現如是等力。",
        "from": "T32n1660_002:0524c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有憍慢增上慢瞋怒兇惡自高眾生，說法調伏，令離憍慢增上慢瞋怒兇惡等。",
        "from": "T32n1660_002:0524c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼得如是神足住持智已，以此住持智有所住持隨意皆得，若以大海為牛迹即成牛迹，若以牛迹為大海即成大海，若以劫燒為水聚者即成水聚，若以水聚為火聚者即成火聚，若以火聚為風聚者即成風聚，若以風聚為火聚者即成火聚。",
        "from": "T32n1660_002:0524c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是若以此住持，隨所住持下中上法既住持已，無有人能震動隱沒。",
        "from": "T32n1660_002:0524c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂若釋若梵若魔及餘世間同法者，除佛世尊，於眾生類中無有眾生於菩薩所住持法震動隱沒，以住持力故。",
        "from": "T32n1660_002:0524c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為彼種種勝上喜踊尊敬眾生說法。",
        "from": "T32n1660_002:0524c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼神足力高出自在，過魔煩惱、入佛境界覺諸眾生，聚集宿世善根資糧，魔及魔身天等不能障礙。",
        "from": "T32n1660_002:0524c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名菩薩神通力。",
        "from": "T32n1660_002:0524c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信力者，於佛法僧及菩薩行中，信解一向不可沮壞。",
        "from": "T32n1660_002:0524c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若惡魔作佛身來，隨於何法欲壞其信，菩薩以信解力故，彼不能動菩薩信力。",
        "from": "T32n1660_002:0525a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名信力。",
        "from": "T32n1660_002:0525a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進力者，菩薩若發起精進，與彼彼善法相應時，於彼彼處得牢固力。",
        "from": "T32n1660_002:0525a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所受行，若天若人不能動壞令其中止。",
        "from": "T32n1660_002:0525a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名精進力。",
        "from": "T32n1660_002:0525a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念力者，住彼彼法處其心安止，諸餘煩惱不能散亂。",
        "from": "T32n1660_002:0525a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以念力持故破諸煩惱，彼諸煩惱不能破壞菩薩所念。",
        "from": "T32n1660_002:0525a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名念力。",
        "from": "T32n1660_002:0525a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩提力者，於憒閙中行遠離行，諸有音聲及語道所出，不為聲刺障礙初禪，行善覺觀不礙二禪，生於愛喜不礙三禪，成熟眾生攝受諸法未曾捨廢不礙四禪。",
        "from": "T32n1660_002:0525a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是遊四種禪，諸禪惡對不能破壞。",
        "from": "T32n1660_002:0525a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖遊諸禪，而不隨禪生。",
        "from": "T32n1660_002:0525a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名菩薩三摩提力。",
        "from": "T32n1660_002:0525a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若力者，謂世出世法中不可壞智，於生生中不由師教，諸所作業工巧明處乃至世間最勝難作難忍，菩薩皆得現前。",
        "from": "T32n1660_002:0525a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出世法救度於世，菩薩智慧隨順入已，彼天人阿修羅眾不能破壞。",
        "from": "T32n1660_002:0525a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名般若力。",
        "from": "T32n1660_002:0525a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等菩薩七力已略解說，若欲具演無有邊際。",
        "from": "T32n1660_002:0525a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名菩薩力波羅蜜。",
        "from": "T32n1660_002:0525a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已解釋力波羅蜜，我今當說智波羅蜜。",
        "from": "T32n1660_002:0525a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中若世間所行書論印算數等，及界論謂風黃痰癊等性、方論謂醫方論，治諸乾痟顛狂鬼持等病、破諸蠱毒，又作戲笑所攝文章談謔等，令生歡喜。",
        "from": "T32n1660_002:0525a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生村城園苑、陂湖池井、華果藥物及林叢等，示現金銀、摩尼、琉璃、貝石白如貝玉、珊瑚等寶性，入於日月薄蝕、星宿、地動、夢怪等事，建立相諸身分支節等。",
        "from": "T32n1660_002:0525a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知於禁戒行處、禪那神通、無量無色處，及餘正覺相應利樂眾生等彼岸。",
        "from": "T32n1660_002:0525b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復知諸世界成壞，隨世界成、隨世界壞皆悉了知。",
        "from": "T32n1660_002:0525b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又知業集故世界成、業盡故世界壞。",
        "from": "T32n1660_002:0525b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知世界若干時成住、知世界若干時壞住。",
        "from": "T32n1660_002:0525b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知諸地界水界風界火界，若大若小若無量等差別。",
        "from": "T32n1660_002:0525b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知極細微塵，亦知所有微塵聚集微塵分散。",
        "from": "T32n1660_002:0525b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知世界中所有地微塵數，如是亦知水火風等微塵數。",
        "from": "T32n1660_002:0525b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知所有眾生身微塵數、國土身微塵數。",
        "from": "T32n1660_002:0525b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知諸眾生麁身細身差別，乃至亦知微塵合成地獄、畜生、餓鬼、阿修羅、天、人等身。",
        "from": "T32n1660_002:0525b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知欲、色、無色界成壞，及知彼小大無量等差別。",
        "from": "T32n1660_002:0525b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知眾生身中業身、報身、色身，知國土身中小大染淨，及撗住、倒住、平住等方網差別。",
        "from": "T32n1660_002:0525b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知業報身中差別名字身。",
        "from": "T32n1660_002:0525b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知聲聞、獨覺、菩薩身中差別名字身。",
        "from": "T32n1660_002:0525b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知如來身中正覺身、願身、化身、住持身、形色相好莊嚴身、威光身、意念身、福身、法身。",
        "from": "T32n1660_002:0525b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知智身中若善分別、若如理思惟、若果相應攝、若世出世、若安立三乘、若共法不共法、若出道非出道、若學無學。",
        "from": "T32n1660_002:0525b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知法身中平等不動，安立世諦處所名字、安立眾生非眾生法、安立佛法聖眾。",
        "from": "T32n1660_002:0525b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知虛空身中無量身，入一切處非身真實無邊無色身差別。",
        "from": "T32n1660_002:0525b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得出生如是等身智。",
        "from": "T32n1660_002:0525b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又得命自在、心自在、眾具自在、業自在、願自在、信解自在、神通自在、智自在、生自在、法自在。",
        "from": "T32n1660_002:0525b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得如是等十自在已，為不思議智者、無量智者、不退智者。",
        "from": "T32n1660_002:0525b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等智有八萬四千行相，是菩薩所知智波羅蜜。",
        "from": "T32n1660_002:0525b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是隨分解釋智波羅蜜，若欲具演，唯佛世尊乃能解說。",
        "from": "T32n1660_002:0525b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此六波羅蜜，　　總菩提資糧，",
        "from": "T32n1660_002:0525c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如虛空中，　　盡攝於諸物。",
        "from": "T32n1660_002:0525c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如所解釋六波羅蜜中，總攝一切菩提資糧，譬如虛空行住諸物，有識無識悉攝在中。",
        "from": "T32n1660_002:0525c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是其餘聞資糧等諸資糧，攝在六波羅蜜中同相無異，應知。",
        "from": "T32n1660_002:0525c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提資糧論卷第二",
        "from": "T32n1660_002:0525c07_100",
        "context_with_next_sentence": false
    }
]