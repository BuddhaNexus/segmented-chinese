[
    {
        "source_sentence": "觀自在菩薩說普賢陀羅尼經",
        "from": "T20n1037_001:0019c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T20n1037_001:0019c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空諡大鑒",
        "from": "T20n1037_001:0019c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正號大廣智大興善寺三藏沙門不空奉　詔譯如是我聞。",
        "from": "T20n1037_001:0019c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時薄伽梵住王舍城靈鷲山。",
        "from": "T20n1037_001:0019c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大苾芻眾及大菩薩摩訶薩九十九俱胝眾俱。",
        "from": "T20n1037_001:0019c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聖觀自在菩薩摩訶薩。",
        "from": "T20n1037_001:0019c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在彼眾會從座而起。",
        "from": "T20n1037_001:0019c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊我欲顯說普賢陀羅尼。",
        "from": "T20n1037_001:0019c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此陀羅尼。",
        "from": "T20n1037_001:0019c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於月上光如來所受得。",
        "from": "T20n1037_001:0019c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩乘者。",
        "from": "T20n1037_001:0019c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔聞此陀羅尼。",
        "from": "T20n1037_001:0019c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得不退轉。",
        "from": "T20n1037_001:0019c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速疾承事一切如來應供正遍知者。",
        "from": "T20n1037_001:0019c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能銷滅一切業障獲得安樂富饒。",
        "from": "T20n1037_001:0019c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身得清淨語業清淨意得清淨。",
        "from": "T20n1037_001:0019c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通達一切大祕密海。",
        "from": "T20n1037_001:0019c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿一切大願海。",
        "from": "T20n1037_001:0019c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見一切如來。",
        "from": "T20n1037_001:0019c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我由聞此陀羅尼。",
        "from": "T20n1037_001:0019c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便證無生法忍。",
        "from": "T20n1037_001:0019c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得首楞嚴三摩地。",
        "from": "T20n1037_001:0019c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得寶印三摩地焰炬三摩地海印三摩地普遍虛空三摩地。",
        "from": "T20n1037_001:0019c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得如是等恒河沙數三摩地門。",
        "from": "T20n1037_001:0019c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復證得開無盡篋等八萬四千陀羅尼門。",
        "from": "T20n1037_001:0019c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此證得具慧具行。",
        "from": "T20n1037_001:0019c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得如是智慧。",
        "from": "T20n1037_001:0019c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就所聞之法。",
        "from": "T20n1037_001:0019c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸佛所聞法無間承事供養。",
        "from": "T20n1037_001:0019c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊許我為四部眾說。",
        "from": "T20n1037_001:0019c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言聽汝宣說。",
        "from": "T20n1037_001:0019c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀自在菩薩摩訶薩。",
        "from": "T20n1037_001:0019c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入金剛曼荼羅三摩地。",
        "from": "T20n1037_001:0019c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T20n1037_001:0019c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫囉怛曩二合怛囉二合野耶一曩莫阿引哩耶二合嚩盧枳帝濕嚩二合囉引耶󰂛地薩怛嚩二合引野摩訶薩怛嚩二合引野三摩訶引迦引嚕抳迦引野怛儞也二合引他佉上誐吠佉上誐吠佉上我吠斫屈芻二合佉吠󰡊嚕二合怛囉二合佉吠伽囉二合引拏佉吠爾賀嚩二合引佉吠迦引野佉吠麼娜佉吠娑囉佉吠吠麼佉吠戍穰上佉吠儞弭多上佉吠鉢囉二合抳馱曩佉吠三摩引他佉吠播引囉弭多去引佉吠󰂛地佉吠娑囉娑囉娑囉薩嚩沒馱引地瑟恥二合帝婆囉婆囉婆囉達磨地瑟恥二合帝迦囉迦囉迦囉僧去伽引地瑟恥二合帝曩莫阿哩野二合嚩嚕枳帝濕嚩二合囉引野冒地薩怛嚩二合野摩訶薩怛嚩二合野摩訶迦嚕抳迦引野曩慕捺嚩二合曩嚩底丁以反引南冒引地薩怛嚩二合句引胝引南引阿地瑟恥二合帝覩𤚥引阿引聿㗚麼二合嬾者娜難上覩怛儞也二合他蘇囉鼻蘇囉鼻母儞母儞摩訶母儞麼底麼底摩訶麼底曩莫阿引哩野二合引嚩盧枳帝濕嚩二合囉引野冒地薩怛嚩二合引野摩訶引薩怛嚩二合引野摩訶引迦引嚕抳迦引野悉殿覩三滿多跋捺囉二合馱引囉抳娑嚩二合引訶引爾時觀自在菩薩。",
        "from": "T20n1037_001:0020a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼時。",
        "from": "T20n1037_001:0020a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十二俱胝菩薩。",
        "from": "T20n1037_001:0020a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得首楞嚴三摩地。",
        "from": "T20n1037_001:0020a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒河沙數菩薩。",
        "from": "T20n1037_001:0020a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得微妙陀羅尼三摩地。",
        "from": "T20n1037_001:0020a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說此陀羅尼功德。",
        "from": "T20n1037_001:0020a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每於晨朝。",
        "from": "T20n1037_001:0020a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此陀羅尼一百八遍。",
        "from": "T20n1037_001:0020a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿二十一日。",
        "from": "T20n1037_001:0020a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩即現其身。",
        "from": "T20n1037_001:0020a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求一切願皆得滿足。",
        "from": "T20n1037_001:0020b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人囚禁枷鎖。",
        "from": "T20n1037_001:0020b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日誦持即得解脫。",
        "from": "T20n1037_001:0020b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人患瘧。",
        "from": "T20n1037_001:0020b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於左耳邊誦患者即愈。",
        "from": "T20n1037_001:0020b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人患風邪魅病。",
        "from": "T20n1037_001:0020b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酥油相和加持二十一遍。",
        "from": "T20n1037_001:0020b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令服即得除差。",
        "from": "T20n1037_001:0020b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若患齒痛。",
        "from": "T20n1037_001:0020b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持齒木二十一遍。",
        "from": "T20n1037_001:0020b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令嚼即愈。",
        "from": "T20n1037_001:0020b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若患耳痛。",
        "from": "T20n1037_001:0020b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取疊花子油。",
        "from": "T20n1037_001:0020b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並置於熟銅器中加持七遍。",
        "from": "T20n1037_001:0020b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滴於耳中即愈。",
        "from": "T20n1037_001:0020b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若患頭痛肚痛。",
        "from": "T20n1037_001:0020b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持手摩捫即愈。",
        "from": "T20n1037_001:0020b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若患鬼魅。",
        "from": "T20n1037_001:0020b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結呪索加持一百八遍。",
        "from": "T20n1037_001:0020b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令帶即愈。",
        "from": "T20n1037_001:0020b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若被拏吉儞魅。",
        "from": "T20n1037_001:0020b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持油七遍。",
        "from": "T20n1037_001:0020b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩塗支節即愈。",
        "from": "T20n1037_001:0020b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若患一切病。",
        "from": "T20n1037_001:0020b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持或手或柳枝摩拂即愈。",
        "from": "T20n1037_001:0020b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸法即未置功業隨誦即効。",
        "from": "T20n1037_001:0020b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲求見佛菩薩。",
        "from": "T20n1037_001:0020b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證陀羅尼門三摩地門。",
        "from": "T20n1037_001:0020b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通隱形安膳那。",
        "from": "T20n1037_001:0020b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥雄黃成就者。",
        "from": "T20n1037_001:0020b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者於舍利塔或佛像前。",
        "from": "T20n1037_001:0020b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗拭曼荼羅懸繒幡蓋。",
        "from": "T20n1037_001:0020b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散種種花燒檀香沈香薰陸香。",
        "from": "T20n1037_001:0020b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燃燈一百盞廣大供養。",
        "from": "T20n1037_001:0020b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦者清淨澡浴。",
        "from": "T20n1037_001:0020b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著淨衣服身持梵行。",
        "from": "T20n1037_001:0020b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦此陀羅尼結方隅界陀羅尼曰。",
        "from": "T20n1037_001:0020b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨囉怛曩二合怛囉二合引野耶曩莫阿引哩野二合引嚩盧枳帝濕嚩二合囉引野󰂛地薩怛嚩二合野摩訶薩怛嚩二合野摩訶迦嚕抳迦引野怛儞也二合他止里滿馱引銘上弭里滿馱引弭止里弭里滿馱引弭枲引摩滿馱引弭枲引摩引銘羯室旨二合娜底訖囉二合麼覩娑嚩二合引訶引以此陀羅尼加持水二十一遍。",
        "from": "T20n1037_001:0020b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於道場中散灑十方即成結界。",
        "from": "T20n1037_001:0020b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說迎請陀羅尼。",
        "from": "T20n1037_001:0020b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言行者先誦此陀羅尼迎請已。",
        "from": "T20n1037_001:0020b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後念誦。",
        "from": "T20n1037_001:0020b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T20n1037_001:0020b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨囉怛曩二合怛囉二合野引耶曩莫阿引哩野二合引嚩嚧枳帝濕嚩二合囉引野󰂛地薩怛嚩二合引野摩訶引薩怛嚩二合引野摩訶迦引嚕抳迦引野怛儞也二合他止里止里弭里弭里止里隷引翳呬婆誐挽曩引哩野二引合嚩盧枳帝濕嚩二合囉娑嚩二合訶引此陀羅尼是我心真言。",
        "from": "T20n1037_001:0021a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言即成請召。",
        "from": "T20n1037_001:0021a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者從白月八日起首。",
        "from": "T20n1037_001:0021a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至十五日。",
        "from": "T20n1037_001:0021a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日三時時別誦一百八遍。",
        "from": "T20n1037_001:0021a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三時澡浴三時換衣。",
        "from": "T20n1037_001:0021a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十五日作廣大供養無限念誦。",
        "from": "T20n1037_001:0021a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其日中夜觀自在菩薩。",
        "from": "T20n1037_001:0021a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來至道場現金色身。",
        "from": "T20n1037_001:0021a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相好端嚴放百千光明。",
        "from": "T20n1037_001:0021a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦者不應恐怖生勇健心。",
        "from": "T20n1037_001:0021a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔見觀自在菩薩。",
        "from": "T20n1037_001:0021a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得地位證得陀羅尼三摩地。",
        "from": "T20n1037_001:0021a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見東方阿閦如來南方寶幢如來西方無量壽如來北方天鼓音王如來。",
        "from": "T20n1037_001:0021a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見四如來十方無量如來身廣大威德。",
        "from": "T20n1037_001:0021a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承於諸佛大悲願力。",
        "from": "T20n1037_001:0021a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久住世間。",
        "from": "T20n1037_001:0021a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此命終當生淨妙佛剎。",
        "from": "T20n1037_001:0021a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處。",
        "from": "T20n1037_001:0021a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養承事諸佛如來。",
        "from": "T20n1037_001:0021a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是經已。",
        "from": "T20n1037_001:0021a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩并天龍藥叉乾闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T20n1037_001:0021a20_4",
        "context_with_next_sentence": true
    },
