[
    {
        "source_sentence": "佛說護國尊者所問大乘經卷第",
        "from": "T12n0321_003:0008c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三",
        "from": "T12n0321_003:0008c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T12n0321_003:0008c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯「爾時，淨光天子而說頌曰：",
        "from": "T12n0321_003:0008c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「『太子！",
        "from": "T12n0321_003:0008c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當知：",
        "from": "T12n0321_003:0008c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　莫著於迷醉，於此嶮難中，　　勤求於出離。",
        "from": "T12n0321_003:0008c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說言：",
        "from": "T12n0321_003:0008c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若離迷醉者，此人大勇猛。",
        "from": "T12n0321_003:0008c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨無瑕穢，　　所見諸眾生，",
        "from": "T12n0321_003:0008c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生慈愍行，　　成佛當不久。",
        "from": "T12n0321_003:0008c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去一切佛、　　現在及未來，",
        "from": "T12n0321_003:0008c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆從眾善生，　　遠離貪、瞋、癡。",
        "from": "T12n0321_003:0008c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食及衣服、　　金、銀、摩尼寶、",
        "from": "T12n0321_003:0008c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種莊嚴具，　　捨施利眾生。",
        "from": "T12n0321_003:0008c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣歷俱胝劫，　　一心求菩提，",
        "from": "T12n0321_003:0008c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未曾有疲懈。",
        "from": "T12n0321_003:0008c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭、目、手、足等，　　於彼求乞人，",
        "from": "T12n0321_003:0008c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生大歡喜。",
        "from": "T12n0321_003:0008c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　以此積功德，而成佛菩提。",
        "from": "T12n0321_003:0008c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豪貴而最上，　　美女及眷屬，",
        "from": "T12n0321_003:0008c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜常圍繞，　　宮殿及國城，",
        "from": "T12n0321_003:0008c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆如幻化。",
        "from": "T12n0321_003:0008c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陽焰、水沫泡，　　其體不堅牢，",
        "from": "T12n0321_003:0008c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非實、非久住。",
        "from": "T12n0321_003:0008c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如是無常法，虛妄汝當知。",
        "from": "T12n0321_003:0008c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　父母與妻男，誰能相救濟？",
        "from": "T12n0321_003:0008c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人隨業行，　　如是無數劫，",
        "from": "T12n0321_003:0009a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常沈生死海。",
        "from": "T12n0321_003:0009a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於境而不了，　　虛受於勤勞，",
        "from": "T12n0321_003:0009a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終墮嶮惡趣。",
        "from": "T12n0321_003:0009a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛精進行，　　乃至於命終，",
        "from": "T12n0321_003:0009a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生三惡道。",
        "from": "T12n0321_003:0009a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法難得聞，　　降伏煩惱怨，",
        "from": "T12n0321_003:0009a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近於善友，　　恒修入正道。",
        "from": "T12n0321_003:0009a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住菩提心，　　不退於佛道，",
        "from": "T12n0321_003:0009a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是行方便，　　世間無有上。",
        "from": "T12n0321_003:0009a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去一切佛，　　捨離於親愛，",
        "from": "T12n0321_003:0009a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常處於深山，　　正念自思惟，",
        "from": "T12n0321_003:0009a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅固如金剛，　　志求無上道。",
        "from": "T12n0321_003:0009a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」爾時，佛告尊者護國言：",
        "from": "T12n0321_003:0009a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「淨光天子說此頌已，彼福光太子年至十歲，智慧明達而無戲論。",
        "from": "T12n0321_003:0009a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於世所有園林、花卉、流泉、浴池、歌舞、作樂而不愛著，乃至國城、宮殿、象、馬、車乘、金、銀、財寶，一切所欲之事悉皆遠離。",
        "from": "T12n0321_003:0009a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心思惟：",
        "from": "T12n0321_003:0009a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我身虛幻，四大假合，無有堅實，大地、諸天悉非究竟。",
        "from": "T12n0321_003:0009a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫眾生常行非法，愚癡迷惑，分別親踈，耽著欲樂無有厭足，永處輪迴無解脫時。",
        "from": "T12n0321_003:0009a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於如是愚迷人中而乃受生。",
        "from": "T12n0321_003:0009a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』作是念已，志意繫心專求解脫。",
        "from": "T12n0321_003:0009a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，世尊復告尊者護國言：",
        "from": "T12n0321_003:0009a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼發光王為其太子選擇最上淨妙福地建置一城，名曰愛樂。",
        "from": "T12n0321_003:0009a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其城七重，於其城中有七百街道，純以七寶、鈴鐸、真珠羅網遍覆其上。",
        "from": "T12n0321_003:0009a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有六十眾寶妙蓋、八萬寶幢於諸街巷次第行布，一一寶幢有六萬寶索，一一寶索有十四俱胝樂器，如是樂器，微風吹動出妙音聲，如百千天樂。",
        "from": "T12n0321_003:0009b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又，於此城街巷、衢路處處各住五百童女——是諸童女身相端嚴，顏貌和悅，於諸音樂、歌舞、作倡一切悉能。",
        "from": "T12n0321_003:0009b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「時發光王勅告之曰：",
        "from": "T12n0321_003:0009b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『令諸童女晝夜作樂，不得間斷。",
        "from": "T12n0321_003:0009b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』所有四方一切人民來入此城，見斯音樂、快樂之事，奔聚看翫，令其太子心生樂著。",
        "from": "T12n0321_003:0009b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復，王言：",
        "from": "T12n0321_003:0009b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『所有眾生求飲食者施以飲食、求衣服者施以衣服、求花鬘塗香者施以花鬘塗香、求床榻臥具者施以床榻臥具，乃至以金、銀、摩尼、硨磲、碼碯、珊瑚、真珠、吠瑠璃等如是諸寶處處堆積，復有象、馬、車乘，皆以眾寶種種莊嚴，令一切眾生隨意受用。",
        "from": "T12n0321_003:0009b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「爾時，發光王復為太子於此城中修建一宮，廣一由旬，造四門樓，戶牖、軒䆫，皆以七寶種種莊嚴。",
        "from": "T12n0321_003:0009b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此宮中置一大殿，用百千珍寶周匝莊挍，於殿中間安四俱胝眾寶床榻及以臥具。",
        "from": "T12n0321_003:0009b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於城中置一大園，花、菓、樹木其數甚多，蓊蔚開敷，世所希有。",
        "from": "T12n0321_003:0009b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間排一切寶樹，光明照曜無不愛樂。",
        "from": "T12n0321_003:0009b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又於園中有七寶池，於池四邊有四界道，四寶所成，所謂金、銀、吠瑠璃、玻瓈。",
        "from": "T12n0321_003:0009b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於池周匝置一百八師子口，水從彼入；",
        "from": "T12n0321_003:0009b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復置一百八師子口，水從彼出。",
        "from": "T12n0321_003:0009b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中復生鉢訥摩花、烏怛鉢攞花、俱母那花、奔拏哩迦花等種種名花，恒時開敷於池周匝。",
        "from": "T12n0321_003:0009b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復有八百寶樹，一一寶樹各懸寶索，一一索上有俱胝數樂器，微風吹動出妙音聲，令諸眾生聞者愛樂。",
        "from": "T12n0321_003:0009b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次，寶樹懸掛八十百千珍寶妙幡，又於池上置大寶網而以為蓋，覆太子身令離塵坌。",
        "from": "T12n0321_003:0009c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「爾時，發光王復令殿內以其七寶造四俱胝寶座，一一寶座各以五百上妙之衣敷於座上。",
        "from": "T12n0321_003:0009c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間置一大座，高七人量，以八十俱胝上妙寶衣敷設其上，此是福光太子所登之座。",
        "from": "T12n0321_003:0009c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸座前各置香爐——純金所成——於爐周匝懸金鈴鐸及金蓮花，摩尼寶網四面嚴飾，光明照耀，晝夜三時恒爇沈香及散妙花。",
        "from": "T12n0321_003:0009c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於園內有九十九百千摩尼寶，一一摩尼寶廣一由旬，有大光明照一切世界。",
        "from": "T12n0321_003:0009c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，世尊復告護國言：",
        "from": "T12n0321_003:0009c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「福光太子園苑之內有種種飛鳥，鸚鵡、鴝鵒、鴛鴦、鵝、鴨、孔雀、舍利、俱枳羅鳥、俱拏羅鳥、迦陵、頻伽、命命鳥等。",
        "from": "T12n0321_003:0009c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾鳥俱善人言，每群飛時作微妙聲——如眾音樂而無有異，亦如天帝歡喜之園——令諸天人受妙快樂。",
        "from": "T12n0321_003:0009c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼發光天子復為太子修饌上味飲食，逐日供給五百千車。",
        "from": "T12n0321_003:0009c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復令使命於諸城邑、聚落選取童女——年十六歲至二十歲者，色相端嚴，諸根具足，不長、不短，不肥、不瘦，不白、不黑，身出白檀香、口出優鉢羅花香，言詞美善，心意純直而無妬忌，善解博弈、歌舞、戲樂，乃至一切世間工巧伎藝無不悉解——如是童女得八十俱胝，來入王城。",
        "from": "T12n0321_003:0009c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「爾時，發光天子以此八十俱胝童女賜於太子、王自宮中所有童女復賜一俱胝、王諸親眷亦以一俱胝童女奉上太子、宰輔重臣亦以一俱胝童女奉上太子、國城庶民亦以一俱胝童女奉上太子，如是八十四俱胝童女俱令侍從承事及歌舞作樂悅樂太子。",
        "from": "T12n0321_003:0010a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告尊者護國言：",
        "from": "T12n0321_003:0010a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「爾時，福光太子見是事已，於其國城、宮殿、樓閣、園林、池沼、象、馬、珍寶及諸童女、歌舞唱妓種種作樂之事，都不愛著。",
        "from": "T12n0321_003:0010a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而自思惟：",
        "from": "T12n0321_003:0010a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『此諸女等於我身分為大惡友，斷我善根、增諸煩惱，常處輪迴，無有自在，譬如有人處於禁縛終不能出。",
        "from": "T12n0321_003:0010a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』爾時，太子見此過失，於十年中於色、聲、香、味、觸五塵諸境而不愛著，一心思惟：",
        "from": "T12n0321_003:0010a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『諸惡友眾云何捨離，而自修行得其解脫？",
        "from": "T12n0321_003:0010a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』作是念已，彼諸童女即詣王宮白父王言：",
        "from": "T12n0321_003:0010a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『其福光太子於諸婇女、戲樂、歌舞都不顧視，獨坐思惟，遠離聲色。",
        "from": "T12n0321_003:0010a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「爾時，發光天子聞是事已，心忽驚愕，怪未曾有。",
        "from": "T12n0321_003:0010a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時統領八萬小王及諸臣從來入太子所住宮中，見彼太子孤處宮殿，儀貌寂然，涕淚悲泣，心大苦惱，迷悶躄地，良久乃蘇。",
        "from": "T12n0321_003:0010a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從地而起即說頌曰：",
        "from": "T12n0321_003:0010a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「『子為最上寶，　　云何不觀我，",
        "from": "T12n0321_003:0010a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憂惱心惶亂？",
        "from": "T12n0321_003:0010a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　云何捨所愛，種種富樂事？",
        "from": "T12n0321_003:0010a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾寶為嚴飾，　　宮殿、妙樓閣、",
        "from": "T12n0321_003:0010a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "園林及浴池、　　象、馬、七珍財、",
        "from": "T12n0321_003:0010a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣服及飲饌，　　如是無量數，",
        "from": "T12n0321_003:0010a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以供給之。",
        "from": "T12n0321_003:0010a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "容顏甚奇妙，　　端正廣莊嚴，",
        "from": "T12n0321_003:0010a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼天女相。",
        "from": "T12n0321_003:0010a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通達諸伎藝、　　歌舞及音樂，",
        "from": "T12n0321_003:0010a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人間無有比。",
        "from": "T12n0321_003:0010a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　所為適悅汝，令其心快樂。",
        "from": "T12n0321_003:0010a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於斯而捨離，　　獨處於深宮，",
        "from": "T12n0321_003:0010b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏貌甚寂澹？",
        "from": "T12n0321_003:0010b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各懷憂惱，　　如彼蓮花萎，",
        "from": "T12n0321_003:0010b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱來而白我。",
        "from": "T12n0321_003:0010b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　太子汝當知：",
        "from": "T12n0321_003:0010b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸童女，　　端正俱年少，",
        "from": "T12n0321_003:0010b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口出優鉢香、　　身有栴檀氣，",
        "from": "T12n0321_003:0010b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩目紺如蓮，　　善知人心意，",
        "from": "T12n0321_003:0010b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令於晝夜中，　　親近作戲樂。",
        "from": "T12n0321_003:0010b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今汝正是時，　　於此而厭棄。",
        "from": "T12n0321_003:0010b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於汝意云何？",
        "from": "T12n0321_003:0010b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　為我速宣說。",
        "from": "T12n0321_003:0010b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又向園林中，　　安置摩尼寶，",
        "from": "T12n0321_003:0010b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十九百千，　　各廣一由旬，",
        "from": "T12n0321_003:0010b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明普照燿。",
        "from": "T12n0321_003:0010b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　寶樹懸寶幡，其數有八萬，　　花菓皆茂盛。",
        "from": "T12n0321_003:0010b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具有眾飛鳥，　　孔雀及鵝、鴨、",
        "from": "T12n0321_003:0010b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦陵、頻迦等，　　皆出微妙音。",
        "from": "T12n0321_003:0010b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於諸樹間，　　各垂於寶索，",
        "from": "T12n0321_003:0010b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一寶索中，　　皆有妙樂器。",
        "from": "T12n0321_003:0010b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微風吹動時，　　出於妙音聲，",
        "from": "T12n0321_003:0010b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清響如天樂，　　云何而不戀？",
        "from": "T12n0321_003:0010b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此諸宮殿，　　皆以眾寶成，",
        "from": "T12n0321_003:0010b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金、銀、摩尼珠、　　硨磲與碼碯、",
        "from": "T12n0321_003:0010b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑠璃、真珠等，　　莊嚴甚微妙。",
        "from": "T12n0321_003:0010b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此寶殿中，　　安置金香爐，",
        "from": "T12n0321_003:0010b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面垂珠網，　　俱胝細妙衣，",
        "from": "T12n0321_003:0010b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以用莊嚴上。",
        "from": "T12n0321_003:0010b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長爇栴檀香，　　如彼天帝宮、",
        "from": "T12n0321_003:0010b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善法堂無異。",
        "from": "T12n0321_003:0010b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "違背於父母，　　都無孝敬心，",
        "from": "T12n0321_003:0010b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我增苦惱。",
        "from": "T12n0321_003:0010c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』　　言已而悲泣：",
        "from": "T12n0321_003:0010c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『為我速宣說。",
        "from": "T12n0321_003:0010c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』　　太子見所問，稽首白父王：",
        "from": "T12n0321_003:0010c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墜墮於眾生，　　纏縛於有情，",
        "from": "T12n0321_003:0010c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長大過失，　　永處於輪迴，",
        "from": "T12n0321_003:0010c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有得出離。",
        "from": "T12n0321_003:0010c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　我今求解脫，發大菩提心，　　遠離諸塵染。",
        "from": "T12n0321_003:0010c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切女人身，　　眾惡不淨本，",
        "from": "T12n0321_003:0010c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀如怨家。",
        "from": "T12n0321_003:0010c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流浪於生死，　　牽繫諸眾生，",
        "from": "T12n0321_003:0010c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常處大嶮路。",
        "from": "T12n0321_003:0010c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皮膚裹不淨，　　血、肉、與骨、髓、",
        "from": "T12n0321_003:0010c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腸、胃、大、小便、　　𭿇、淚、洟、唾等，",
        "from": "T12n0321_003:0010c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是穢惡身，　　云何令愛樂？",
        "from": "T12n0321_003:0010c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如毒藥樹，　　開花眾所愛，",
        "from": "T12n0321_003:0010c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採花毒入身，　　不覺殞其命。",
        "from": "T12n0321_003:0010c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國城與宮殿、　　音樂及歌舞，",
        "from": "T12n0321_003:0010c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟不堅牢，　　如夢、如幻化。",
        "from": "T12n0321_003:0010c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如春樹木，　　滋茂葉芬芳，",
        "from": "T12n0321_003:0010c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔至冬月時，　　凋落悉枯悴；",
        "from": "T12n0321_003:0010c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女人及富饒，　　不久亦如是。",
        "from": "T12n0321_003:0010c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡狂亂心，　　常沒貪欲海，",
        "from": "T12n0321_003:0010c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬪諍起憎嫉，　　互相行殺害。",
        "from": "T12n0321_003:0010c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父王及眷屬、　　妻子并男女，",
        "from": "T12n0321_003:0010c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼惡趣中，　　誰能行救濟？",
        "from": "T12n0321_003:0010c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩大智人，　　身心常寂靜，",
        "from": "T12n0321_003:0010c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀彼如草木，　　不動如須彌。",
        "from": "T12n0321_003:0010c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常樂處深山，　　一心求正道，",
        "from": "T12n0321_003:0010c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮世不久住，　　如山水急流。",
        "from": "T12n0321_003:0010c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人命若浮雲，　　須臾即散滅，",
        "from": "T12n0321_003:0011a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墜墮三有中，　　迷沒於生死。",
        "from": "T12n0321_003:0011a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不著愚迷，　　遠離於虛妄，",
        "from": "T12n0321_003:0011a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色、聲五欲塵，　　非是菩薩境。",
        "from": "T12n0321_003:0011a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福盡無福生、　　業盡復生業，",
        "from": "T12n0321_003:0011a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如鳥禁籠中，　　長不得自在。",
        "from": "T12n0321_003:0011a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六塵如毒蛇，　　損惱於眾生；",
        "from": "T12n0321_003:0011a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大不堅實，　　猶如空聚落。",
        "from": "T12n0321_003:0011a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父王今當知：",
        "from": "T12n0321_003:0011a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸趣真解脫，　　常運妙法船，",
        "from": "T12n0321_003:0011a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度脫於三有。",
        "from": "T12n0321_003:0011a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禁縛得解脫、　　患苦使獲安、",
        "from": "T12n0321_003:0011a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盲者與開目、　　貧窮賜珍財，",
        "from": "T12n0321_003:0011a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉令離憂苦。",
        "from": "T12n0321_003:0011a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枯竭貪愛河、　　照燭黑暗路、",
        "from": "T12n0321_003:0011a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣布於雲雷、　　降霔甘露雨、",
        "from": "T12n0321_003:0011a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除熱得清涼，　　成就最上智。",
        "from": "T12n0321_003:0011a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父王今當知：",
        "from": "T12n0321_003:0011a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　何人懷慈忍，而欲作怨家？",
        "from": "T12n0321_003:0011a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　何人具智慧，怖見佛、法、僧？",
        "from": "T12n0321_003:0011a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　何人有眼目，入於嶮路行？",
        "from": "T12n0321_003:0011a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　何人得菩提，而欲作散亂？",
        "from": "T12n0321_003:0011a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如斯有智人，必不行邪道。",
        "from": "T12n0321_003:0011a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投身入大海，　　於此五欲塵，",
        "from": "T12n0321_003:0011a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不生染著。",
        "from": "T12n0321_003:0011a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并及於眷屬，　　請王速將歸，",
        "from": "T12n0321_003:0011a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此勿久住。",
        "from": "T12n0321_003:0011a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　在家多過失，障蔽佛菩提。",
        "from": "T12n0321_003:0011a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸眷屬等，　　行詣於深山，",
        "from": "T12n0321_003:0011a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修習清淨行，　　志求無上道。",
        "from": "T12n0321_003:0011b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」爾時，佛告尊者護國言：",
        "from": "T12n0321_003:0011b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼福光太子處於寶殿，是諸童女圍繞侍從，太子觀之深生厭離，於三威儀中行、住、坐時，求斷一切煩惱。",
        "from": "T12n0321_003:0011b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月初八日於地而坐，正意思惟離諸塵染。",
        "from": "T12n0321_003:0011b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「作是觀已，於中夜時忽聞空中淨光天子讚佛、讚法及苾芻眾。",
        "from": "T12n0321_003:0011b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是聞已，身毛皆竪，悲喜交并，合掌向空以頌問曰：",
        "from": "T12n0321_003:0011b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「『虛空諸天大慈愍，　　發聲稱讚讚何人？",
        "from": "T12n0321_003:0011b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我要歸依求出離，　　願樂聽聞為開演。",
        "from": "T12n0321_003:0011b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「爾時，淨光天子於虛空中聞彼所問，而為太子說所讚事，以頌答曰：",
        "from": "T12n0321_003:0011b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「『我今稱讚大沙門，　　彼佛名曰成義意，",
        "from": "T12n0321_003:0011b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以十善化群迷，　　救濟孤獨諸有苦。",
        "from": "T12n0321_003:0011b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便、智慧最為上，　　功德、神力無有比，",
        "from": "T12n0321_003:0011b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常有十千那由他，　　苾芻之眾恒恭敬。",
        "from": "T12n0321_003:0011b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』太子復問淨光天：",
        "from": "T12n0321_003:0011b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　『有何功德及相好？",
        "from": "T12n0321_003:0011b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼佛所行菩提行，　　重為宣說我樂聞。",
        "from": "T12n0321_003:0011b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「爾時，淨光天子復為太子說佛功德、相好，以頌答曰：",
        "from": "T12n0321_003:0011b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「『佛頂如須彌，　　出眾而高顯；",
        "from": "T12n0321_003:0011b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "螺髮而紺青，　　右旋俱齊整；",
        "from": "T12n0321_003:0011b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眉間白毫光，　　照燿如千日；",
        "from": "T12n0321_003:0011b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目紺淨分明，　　猶如青蓮葉；",
        "from": "T12n0321_003:0011b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頷臆如師子，　　脣色勝頻婆；",
        "from": "T12n0321_003:0011b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齒密無缺減，　　白類如珂雪；",
        "from": "T12n0321_003:0011b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臍輪廣右旋，　　如淨頗𭹳寶；",
        "from": "T12n0321_003:0011b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌色如紅蓮，　　廣長而薄淨，",
        "from": "T12n0321_003:0011b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒展覆面輪，　　此相最微妙。",
        "from": "T12n0321_003:0011b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵音而清響，　　美妙出世間，",
        "from": "T12n0321_003:0011c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天人，　　聞者皆歡喜。",
        "from": "T12n0321_003:0011c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使百千樂，　　莫等佛音聲，",
        "from": "T12n0321_003:0011c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德廣無邊，　　能斷眾生惑，",
        "from": "T12n0321_003:0011c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令行菩提行。",
        "from": "T12n0321_003:0011c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰緊那囉、　　鴛鴦、俱枳羅、",
        "from": "T12n0321_003:0011c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩哩呬拏、鵝、　　具沙、俱拏羅、",
        "from": "T12n0321_003:0011c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦陵、頻伽等，　　各有色相嚴；",
        "from": "T12n0321_003:0011c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛相好亦然。",
        "from": "T12n0321_003:0011c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　佛以一言辭，隨眾各得解，　　近遠平等聞。",
        "from": "T12n0321_003:0011c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來法自在，　　項頸長細妙，",
        "from": "T12n0321_003:0011c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量等於身分；",
        "from": "T12n0321_003:0011c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂手過於膝，　　如是妙端嚴，",
        "from": "T12n0321_003:0011c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七處皆平滿。",
        "from": "T12n0321_003:0011c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　雙肱如象鼻，兩腨勝鹿王；",
        "from": "T12n0321_003:0011c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　陰相而藏隱，猶如龍馬王；",
        "from": "T12n0321_003:0011c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　身毛紺右旋，無畏如師子；",
        "from": "T12n0321_003:0011c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　佛頂如天蓋，嚴飾金色身；",
        "from": "T12n0321_003:0011c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足現千輻輪，　　莎悉帝迦相，",
        "from": "T12n0321_003:0011c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是廣端嚴，　　世間甚希有。",
        "from": "T12n0321_003:0011c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今若親近，　　有德與無德、",
        "from": "T12n0321_003:0011c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有福及無福，　　一一自當知。",
        "from": "T12n0321_003:0011c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有稱佛名，　　讚毀俱不著，",
        "from": "T12n0321_003:0011c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蓮在水中，　　淤泥不可染。",
        "from": "T12n0321_003:0011c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我佛大導師，　　世間無有上。",
        "from": "T12n0321_003:0011c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」佛說護國尊者所問大乘經卷第三",
        "from": "T12n0321_003:0011c26_100",
        "context_with_next_sentence": false
    }
]