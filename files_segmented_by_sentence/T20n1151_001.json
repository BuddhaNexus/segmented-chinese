[
    {
        "source_sentence": "修習般若波羅蜜菩薩觀行念誦",
        "from": "T20n1151_001:0610c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀軌一卷",
        "from": "T20n1151_001:0610c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T20n1151_001:0610c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命般若母　　清淨妙法身",
        "from": "T20n1151_001:0610c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今依瑜伽　　演說觀行法",
        "from": "T20n1151_001:0610c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心遍法界　　一切佛剎海",
        "from": "T20n1151_001:0610c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想身周圍遶　　由是得解脫",
        "from": "T20n1151_001:0610c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想身遶諸佛　　一一諸佛前",
        "from": "T20n1151_001:0610c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩眾圍遶　　持妙供養具",
        "from": "T20n1151_001:0610c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世諸如來　　及大菩薩眾",
        "from": "T20n1151_001:0610c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣覺與聲聞　　一切正法藏",
        "from": "T20n1151_001:0610c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉盡無餘　　遍想於己身",
        "from": "T20n1151_001:0610c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切乃眾前　　分明如對目",
        "from": "T20n1151_001:0610c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆從淨心生　　廣多供養具",
        "from": "T20n1151_001:0610c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作無量供養　　無間恒作禮",
        "from": "T20n1151_001:0610c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宮殿妙拂蓋　　無數眾樓閣",
        "from": "T20n1151_001:0610c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花鬘末塗香　　種種寶莊嚴",
        "from": "T20n1151_001:0610c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸供養儀　　遍滿虛空界",
        "from": "T20n1151_001:0610c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殷勤心加持　　奉獻諸如來",
        "from": "T20n1151_001:0610c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如空剎土爾　　如剎佛亦然",
        "from": "T20n1151_001:0610c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛法亦然　　如法供養然",
        "from": "T20n1151_001:0611a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆無量　　十方無邊剎",
        "from": "T20n1151_001:0611a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知已作是言　　敬禮諸如來",
        "from": "T20n1151_001:0611a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍禮一切如來真言曰。",
        "from": "T20n1151_001:0611a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種勝無量　　大乘經所說",
        "from": "T20n1151_001:0611a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼佛心　　殷勤應稱誦",
        "from": "T20n1151_001:0611a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生淨信心　　專注於一境",
        "from": "T20n1151_001:0611a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸有情類　　觀察勝菩提",
        "from": "T20n1151_001:0611a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即當作偏袒　　右膝而著地",
        "from": "T20n1151_001:0611a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠心合掌住　　應作如是言",
        "from": "T20n1151_001:0611a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自作教他作　　或自他隨喜",
        "from": "T20n1151_001:0611a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由身口意罪　　願諸佛哀愍",
        "from": "T20n1151_001:0611a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今生一億罪　　乃至無始世",
        "from": "T20n1151_001:0611a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及當坐菩提　　不復更違犯",
        "from": "T20n1151_001:0611a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是勝懺悔　　真實觀察故",
        "from": "T20n1151_001:0611a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛願智火　　焚盡無有餘",
        "from": "T20n1151_001:0611a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能取及所取　　一切皆唯心",
        "from": "T20n1151_001:0611a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛剎等供養　　能取所取意",
        "from": "T20n1151_001:0611a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩住等引　　見心如影像",
        "from": "T20n1151_001:0611a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能取想分別　　安住於空性",
        "from": "T20n1151_001:0611a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二性無性相　　是名為空相",
        "from": "T20n1151_001:0611a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無性非無性　　不離於一性",
        "from": "T20n1151_001:0611a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能所及供養　　三種離分別",
        "from": "T20n1151_001:0611a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由無分別故　　此供養為勝",
        "from": "T20n1151_001:0611a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是勝供養　　及以旋遶法",
        "from": "T20n1151_001:0611a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切重罪咎　　除滅皆無餘",
        "from": "T20n1151_001:0611a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪性知無貪　　即入貪性空",
        "from": "T20n1151_001:0611a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋性知無瞋　　即入瞋性空",
        "from": "T20n1151_001:0611b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡性知無癡　　即入癡性空",
        "from": "T20n1151_001:0611b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是於諸惑　　觀察實相理",
        "from": "T20n1151_001:0611b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有此智慧者　　由空無分別",
        "from": "T20n1151_001:0611b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蓮華處水　　不著諸罪咎",
        "from": "T20n1151_001:0611b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行者作如是觀照。",
        "from": "T20n1151_001:0611b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨身心已即結三昧耶印。",
        "from": "T20n1151_001:0611b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽相交合　　當安於心上",
        "from": "T20n1151_001:0611b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍觀虛空佛　　誦真言三遍",
        "from": "T20n1151_001:0611b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1151_001:0611b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日𠻴一合引惹禮次結金剛縛。",
        "from": "T20n1151_001:0611b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十度外相叉。",
        "from": "T20n1151_001:0611b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密縛成印相。",
        "from": "T20n1151_001:0611b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛縛真言。",
        "from": "T20n1151_001:0611b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1151_001:0611b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前金剛縛　　掣擊於心上",
        "from": "T20n1151_001:0611b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅諸結使　　開顯解脫宮",
        "from": "T20n1151_001:0611b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即當誦開心真言曰。",
        "from": "T20n1151_001:0611b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結發智印　　如前金剛縛",
        "from": "T20n1151_001:0611b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧入於掌　　召入圓寂智",
        "from": "T20n1151_001:0611b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召入於種智真言曰。",
        "from": "T20n1151_001:0611b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛拳　　進力跓禪智",
        "from": "T20n1151_001:0611b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛身語意　　密合不傾動",
        "from": "T20n1151_001:0611b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦金剛拳真言曰。",
        "from": "T20n1151_001:0611b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結三昧耶　　自成普賢故",
        "from": "T20n1151_001:0611b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結已竪忍願　　身處於月輪",
        "from": "T20n1151_001:0611b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦三昧耶真言曰。",
        "from": "T20n1151_001:0611c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結大真誓　　忍願反入縛",
        "from": "T20n1151_001:0611c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧定智竪　　二度三觸心",
        "from": "T20n1151_001:0611c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏識厭離種　　能除悲增長",
        "from": "T20n1151_001:0611c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當誦真言曰。",
        "from": "T20n1151_001:0611c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應作辟除　　結金剛藥叉",
        "from": "T20n1151_001:0611c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛拳　　檀慧進力屈",
        "from": "T20n1151_001:0611c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於口兩頰　　想身同彼尊",
        "from": "T20n1151_001:0611c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厲聲誦真言　　左右而顧視",
        "from": "T20n1151_001:0611c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藥叉真言曰。",
        "from": "T20n1151_001:0611c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有諸障者　　悉皆四馳散",
        "from": "T20n1151_001:0611c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二目想麼吒　　轉如日月輪",
        "from": "T20n1151_001:0611c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀金剛拳　　各安於二𦜮",
        "from": "T20n1151_001:0611c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨日作旋視　　以成十方界",
        "from": "T20n1151_001:0611c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦金剛眼真言曰。",
        "from": "T20n1151_001:0611c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當入三摩地　　縛印相如前",
        "from": "T20n1151_001:0611c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰安結跏上　　端身須正直",
        "from": "T20n1151_001:0611c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉目入正定　　遍觀虛空佛",
        "from": "T20n1151_001:0611c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡滿如胡麻　　彼一切如來",
        "from": "T20n1151_001:0611c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憶昔誓願故　　異口同音聲",
        "from": "T20n1151_001:0611c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教授說真言　　專注實相理",
        "from": "T20n1151_001:0611c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專注實相理　　頻誦此真言",
        "from": "T20n1151_001:0611c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安心內觀察　　漸令周法界",
        "from": "T20n1151_001:0611c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切虛空相　　虛空亦無相",
        "from": "T20n1151_001:0611c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空瑜伽故　　舒遍於十方",
        "from": "T20n1151_001:0612a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者既入。",
        "from": "T20n1151_001:0612a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若波羅蜜甚深體性三摩地。",
        "from": "T20n1151_001:0612a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則於真實性中證大月輪量同法界。",
        "from": "T20n1151_001:0612a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明普照寂然清涼。",
        "from": "T20n1151_001:0612a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起大悲愍一切有情三界熾然。",
        "from": "T20n1151_001:0612a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如一子想深生拔濟。",
        "from": "T20n1151_001:0612a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作是念我今云何。",
        "from": "T20n1151_001:0612a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令未得度而令得度。",
        "from": "T20n1151_001:0612a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未解脫者令得解脫。",
        "from": "T20n1151_001:0612a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未安慰者令得安慰。",
        "from": "T20n1151_001:0612a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未涅槃者令得涅槃。",
        "from": "T20n1151_001:0612a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則入本尊瑜伽三摩地。",
        "from": "T20n1151_001:0612a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀身為般若波羅蜜佛母。",
        "from": "T20n1151_001:0612a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戴五佛冠天衣瓔珞。",
        "from": "T20n1151_001:0612a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金色光明遍毛孔中。",
        "from": "T20n1151_001:0612a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出無量諸佛。",
        "from": "T20n1151_001:0612a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作是念。",
        "from": "T20n1151_001:0612a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我身與般若波羅蜜菩薩無二無別。",
        "from": "T20n1151_001:0612a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以金剛護菩薩加持四處。",
        "from": "T20n1151_001:0612a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛縛　　進力竪如針",
        "from": "T20n1151_001:0612a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印心頞喉頂　　成本尊瑜伽",
        "from": "T20n1151_001:0612a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦真言曰。",
        "from": "T20n1151_001:0612a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結五佛冠　　二手金剛縛",
        "from": "T20n1151_001:0612a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願形如刀　　進力附上節",
        "from": "T20n1151_001:0612a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置頂次四方　　二拳額前遶",
        "from": "T20n1151_001:0612a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如鬘頂後繫　　垂下勢如帶",
        "from": "T20n1151_001:0612a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來寶冠真言曰。",
        "from": "T20n1151_001:0612a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵部欠次誦金剛部真言曰。",
        "from": "T20n1151_001:0612a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉二合薩怛嚩二合次誦寶部真言曰。",
        "from": "T20n1151_001:0612a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉二合囉怛娜二合次誦蓮華部真言曰。",
        "from": "T20n1151_001:0612a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉二合達囉摩二合次誦事業部真言曰。",
        "from": "T20n1151_001:0612a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉二合羯囉磨二合次誦金剛鬘灌頂真言曰。",
        "from": "T20n1151_001:0612b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一嚩日囉二合引麼引邏引避詵者二滿三引𤚥次結甲冑印。",
        "from": "T20n1151_001:0612b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛印。",
        "from": "T20n1151_001:0612b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擐甲及自他。",
        "from": "T20n1151_001:0612b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指相繞結。",
        "from": "T20n1151_001:0612b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒成於大護。",
        "from": "T20n1151_001:0612b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦甲冑真言曰。",
        "from": "T20n1151_001:0612b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合迦嚩左嚩日𠼝二合句嚕嚩日囉二合唅以此甲冑印及誦真言而被甲。",
        "from": "T20n1151_001:0612b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得金剛性身。",
        "from": "T20n1151_001:0612b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及獲金剛壽命。",
        "from": "T20n1151_001:0612b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡形得大加護。",
        "from": "T20n1151_001:0612b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處無能沮壞。",
        "from": "T20n1151_001:0612b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被甲已齊。",
        "from": "T20n1151_001:0612b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌拍令歡喜。",
        "from": "T20n1151_001:0612b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦金剛歡喜真言曰。",
        "from": "T20n1151_001:0612b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此心真言　　解縛得歡喜",
        "from": "T20n1151_001:0612b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得金剛體　　如金剛薩埵",
        "from": "T20n1151_001:0612b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍入金剛已　　大印如儀則",
        "from": "T20n1151_001:0612b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身前應當結　　思惟大薩埵",
        "from": "T20n1151_001:0612b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見彼智薩埵　　應觀於自身",
        "from": "T20n1151_001:0612b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召引入縛　　令喜作成就",
        "from": "T20n1151_001:0612b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦般若波羅蜜遍入真言曰。",
        "from": "T20n1151_001:0612b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵達麼嚩日囉二合惡次誦般若波羅蜜觀念心真言曰。",
        "from": "T20n1151_001:0612b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵達麼嚩日㘑二合涅哩二合捨野二合弱吽鑁斛此是大薩埵鉤召引入縛令心喜悅誦三昧耶薩怛鑁三合遍入背後而月輪。",
        "from": "T20n1151_001:0612b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中應觀後面薩埵。",
        "from": "T20n1151_001:0612b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我三昧耶薩怛鑁三合隨彼印薩埵。",
        "from": "T20n1151_001:0612b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修習觀自身。",
        "from": "T20n1151_001:0612b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛語已成。",
        "from": "T20n1151_001:0612b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成就諸印。",
        "from": "T20n1151_001:0612b26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者即於壇中本尊像前。",
        "from": "T20n1151_001:0612b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想七寶樓閣而開四門。",
        "from": "T20n1151_001:0612b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其殿中觀地字門。",
        "from": "T20n1151_001:0612b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成般若波羅蜜佛母。",
        "from": "T20n1151_001:0612b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以十波羅蜜圍遶。",
        "from": "T20n1151_001:0612b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及八供養四門鉤鎖并八方天眾。",
        "from": "T20n1151_001:0612c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以本種子字觀想而成。",
        "from": "T20n1151_001:0612c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想己身在於色界阿迦尼吒天。",
        "from": "T20n1151_001:0612c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即當作請印。",
        "from": "T20n1151_001:0612c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召集作彈指　　應請一切佛",
        "from": "T20n1151_001:0612c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那頃諸佛　　并金剛菩薩",
        "from": "T20n1151_001:0612c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應滿一切壇　　集會曼茶羅",
        "from": "T20n1151_001:0612c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即速疾大印　　觀金剛薩埵",
        "from": "T20n1151_001:0612c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍稱百八　　由結集印喜",
        "from": "T20n1151_001:0612c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來皆堅固　　金剛薩自成",
        "from": "T20n1151_001:0612c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈友而安住　　諸門一切處",
        "from": "T20n1151_001:0612c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤等而作業　　以大羯磨印",
        "from": "T20n1151_001:0612c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召集真言曰。",
        "from": "T20n1151_001:0612c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當結四攝　　二羽金剛拳",
        "from": "T20n1151_001:0612c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交腕結檀慧　　頭指如大鉤",
        "from": "T20n1151_001:0612c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如索亦如鎖　　手背而相逼",
        "from": "T20n1151_001:0612c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鉤真言曰。",
        "from": "T20n1151_001:0612c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日𠻴二合矩勢一弱金剛索真言曰。",
        "from": "T20n1151_001:0612c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉二合引播勢𤙖二合金剛鎖真言曰。",
        "from": "T20n1151_001:0612c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉二合餉迦麗一𤚥金剛鈴真言曰。",
        "from": "T20n1151_001:0612c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由金剛鉤召　　能作諸事業",
        "from": "T20n1151_001:0612c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由金剛索儀　　能一切引入",
        "from": "T20n1151_001:0612c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鎖相應　　堪任一切縛",
        "from": "T20n1151_001:0612c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由金剛入縛　　能成諸遍入",
        "from": "T20n1151_001:0612c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即捧閼伽器。",
        "from": "T20n1151_001:0612c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦百字明而奉獻之。",
        "from": "T20n1151_001:0612c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合薩怛嚩二合一三去麼野摩努鼻音播引攞野二嚩日囉二合引薩怛嚩二合三底吠二合怒跛底丁以反瑟吒二合四捏哩二合濁荼護反冥上婆去嚩無可反五蘇妬引使喻二合引銘上婆去嚩六阿上弩鼻囉上訖妬二合引銘上婆嚩七蘇報引使喻二合引銘上婆上嚩八薩嚩悉朕敵禁反銘上鉢囉二合引野縒上九薩嚩羯摩蘇者銘上十質跢上室唎二合藥矩嚕十一吽訶訶訶訶穀婆誐鑁十二薩嚩怛他去引誐跢十三嚩日囉二合引莽引銘上悶上者十四嚩日哩二合婆上嚩上十五摩訶三去麼耶薩怛嚩二合惡引入十六由以百字真言奉閼伽水故。",
        "from": "T20n1151_001:0613a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有願求速得成就。",
        "from": "T20n1151_001:0613a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦金剛嬉戲真言曰。",
        "from": "T20n1151_001:0613a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "系囉底嚩日囉二合一尾邏賜儞二怛囉二合吒半音次金剛鬘真言曰。",
        "from": "T20n1151_001:0613a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "系囉底嚩日囉二合引一賀細二訶訶三次金剛歌真言曰。",
        "from": "T20n1151_001:0613a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "系囉底嚩日囉二合引一擬諦諦諦次金剛舞真言曰。",
        "from": "T20n1151_001:0613a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "系囉底嚩日囉二合引一儞哩二合底曳二合二吠波吠波三復作外四供養而奉獻之。",
        "from": "T20n1151_001:0613a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次金剛花鬘真言曰。",
        "from": "T20n1151_001:0613a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "系一嚩日囉二合引二囉底三次金剛香真言曰。",
        "from": "T20n1151_001:0613a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶囉多嚩日哩二合一斛二次金剛燈真言曰。",
        "from": "T20n1151_001:0613a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一嚩日囉二合引二路者寧三次金剛塗香真言曰。",
        "from": "T20n1151_001:0613b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶室唎二合一嚩日哩二合二呬三修行者纔住是八供養菩薩三摩地。",
        "from": "T20n1151_001:0613b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能出生盡十方界一切佛剎廣大雲海供養儀式。",
        "from": "T20n1151_001:0613b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次即結本尊三昧耶印。",
        "from": "T20n1151_001:0613b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽金剛合掌。",
        "from": "T20n1151_001:0613b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指各捻二頭指側誦本尊真言七遍。",
        "from": "T20n1151_001:0613b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1151_001:0613b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜謨婆去誐嚩怛曳二合引一鉢囉二合引枳孃二合播引囉弭跢引曳二唵三紇唎二合入引地引入室哩二合引四󰡊嚕二合底尾惹曳五娑嚩二合引賀誦真言已頂上散印。",
        "from": "T20n1151_001:0613b10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當誦念珠真言曰。",
        "from": "T20n1151_001:0613b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合引愚呬耶二合引惹跛三麼曳吽由誦此真言加持念珠七遍故。",
        "from": "T20n1151_001:0613b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦一遍則成千遍。",
        "from": "T20n1151_001:0613b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是加持畢已。",
        "from": "T20n1151_001:0613b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四時三時乃至二時。",
        "from": "T20n1151_001:0613b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一百八遍或一千遍。",
        "from": "T20n1151_001:0613b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡時分遍數一則常定。",
        "from": "T20n1151_001:0613b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時誦數滿如前頂戴。",
        "from": "T20n1151_001:0613b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入般若波羅蜜三摩地。",
        "from": "T20n1151_001:0613b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於心中想圓滿月輪量周法界。",
        "from": "T20n1151_001:0613b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中觀地字門。",
        "from": "T20n1151_001:0613b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了分明色如珂雪專注而住。",
        "from": "T20n1151_001:0613b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即名為奢摩他。",
        "from": "T20n1151_001:0613b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝諸散動心既定已。",
        "from": "T20n1151_001:0613b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即與慧相應。",
        "from": "T20n1151_001:0613b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思地字義一切法性相如法界不可得故。",
        "from": "T20n1151_001:0613b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即名為毘鉢舍那。",
        "from": "T20n1151_001:0613b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或與定相應或與慧相應。",
        "from": "T20n1151_001:0613b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久已純熟定慧雙運。",
        "from": "T20n1151_001:0613b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能觀所觀平等平等。",
        "from": "T20n1151_001:0613b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能取所取悉應遠離。",
        "from": "T20n1151_001:0613b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常作如是觀照。",
        "from": "T20n1151_001:0613b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現生得入初地。",
        "from": "T20n1151_001:0613b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後十六大生成普賢菩薩。",
        "from": "T20n1151_001:0613b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結本尊印誦百字真言。",
        "from": "T20n1151_001:0613b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重結八供養印捧閼伽水。",
        "from": "T20n1151_001:0613b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛眼左視解界。",
        "from": "T20n1151_001:0613b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結法波羅蜜印奉送聖眾誦金剛解脫真言曰。",
        "from": "T20n1151_001:0613b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一訖哩二合覩嚩入二薩嚩薩怛嚩二合引囉他二合引悉地囉娜二合多三野他引弩誐引四蘖蹉引特鑁二合五沒馱尾灑焰六布曩囉引誐七麼曩野覩八唵嚩日囉二合渴誐薩怛嚩二合穆復以金剛寶印。",
        "from": "T20n1151_001:0613c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌頂被甲禮五方佛。",
        "from": "T20n1151_001:0613c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即出道場隨意經行讀大乘經典。",
        "from": "T20n1151_001:0613c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此殊勝福迴向一切有情。",
        "from": "T20n1151_001:0613c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速證般若波羅蜜無上正等菩提。",
        "from": "T20n1151_001:0613c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次後便說功能頗殊妙矣。",
        "from": "T20n1151_001:0613c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若波羅蜜多根本真言曰。",
        "from": "T20n1151_001:0613c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨婆去誐嚩戴引鉢囉二合枳孃二合播引囉弭跢引曳唵紇哩二合入引地入引室哩二合入引戍嚕二合底尾惹曳娑嚩二合引訶引佛言此陀羅尼印有四種名。",
        "from": "T20n1151_001:0613c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一名般若無盡藏。",
        "from": "T20n1151_001:0613c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二名般若眼。",
        "from": "T20n1151_001:0613c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三名般若根本。",
        "from": "T20n1151_001:0613c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四名金剛般若心。",
        "from": "T20n1151_001:0613c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼印有大功德。",
        "from": "T20n1151_001:0613c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能至心如法受持。",
        "from": "T20n1151_001:0613c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨誦一遍出生一萬八千修多羅藏。",
        "from": "T20n1151_001:0613c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼一一修多羅中。",
        "from": "T20n1151_001:0613c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各出生二萬五千修多羅藏。",
        "from": "T20n1151_001:0613c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼一一修多羅中。",
        "from": "T20n1151_001:0613c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生百萬修多羅藏。",
        "from": "T20n1151_001:0613c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼一一修多羅藏中。",
        "from": "T20n1151_001:0613c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生無量百千萬億那由他阿僧祇修多羅藏。",
        "from": "T20n1151_001:0613c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是乃至展轉。",
        "from": "T20n1151_001:0613c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出世無量無盡修多羅藏。",
        "from": "T20n1151_001:0613c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所出經題名句義味。",
        "from": "T20n1151_001:0613c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各不同而不重出。",
        "from": "T20n1151_001:0613c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是念念出生無盡。",
        "from": "T20n1151_001:0613c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故名為無盡藏陀羅尼印。",
        "from": "T20n1151_001:0613c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼印。",
        "from": "T20n1151_001:0613c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是十方三世諸佛宗祖。",
        "from": "T20n1151_001:0613c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是十方三世諸佛無盡法藏。",
        "from": "T20n1151_001:0613c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切般若波羅蜜母。",
        "from": "T20n1151_001:0613c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過現未來諸佛菩薩常所供養恭敬讚歎。",
        "from": "T20n1151_001:0613c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人等。",
        "from": "T20n1151_001:0613c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至誠心書寫讀誦如說修行。",
        "from": "T20n1151_001:0613c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所有百千萬億恒河沙劫生死重罪。",
        "from": "T20n1151_001:0613c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於須臾頃悉滅無餘。",
        "from": "T20n1151_001:0613c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼印所有功德。",
        "from": "T20n1151_001:0613c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若住於百千萬億阿僧祇劫。",
        "from": "T20n1151_001:0613c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎猶不盡。",
        "from": "T20n1151_001:0613c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況餘人歎之能盡。",
        "from": "T20n1151_001:0613c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲修行般若法者。",
        "from": "T20n1151_001:0613c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一食齋戒香湯洗浴。",
        "from": "T20n1151_001:0613c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著新淨衣入於道場。",
        "from": "T20n1151_001:0614a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要當先誦此陀羅尼并作此印滿百萬遍然後修行餘般若法決定成就。",
        "from": "T20n1151_001:0614a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故名為般若根本。",
        "from": "T20n1151_001:0614a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼印。",
        "from": "T20n1151_001:0614a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能照了一切般若波羅蜜法。",
        "from": "T20n1151_001:0614a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名般若波羅蜜眼。",
        "from": "T20n1151_001:0614a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼印。",
        "from": "T20n1151_001:0614a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能摧滅一切障礙。",
        "from": "T20n1151_001:0614a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能住持一切諸佛菩薩功德。",
        "from": "T20n1151_001:0614a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名金剛般若心也。",
        "from": "T20n1151_001:0614a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修習般若波羅蜜菩薩觀行念誦儀軌一卷",
        "from": "T20n1151_001:0614a07_100",
        "context_with_next_sentence": false
    }
]