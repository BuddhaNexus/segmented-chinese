{
    "X38n0695_008:0761b03_0": "佛說梵網經菩薩心地品下略疏卷八",
    "X38n0695_008:0761b05_0": "姚秦三藏法師　鳩摩羅什　譯",
    "X38n0695_008:0761b06_0": "廣州寶象林沙門　弘贊　述",
    "X38n0695_008:0761b07_0": "○第四十七非法制限戒。",
    "X38n0695_008:0761b08_0": "違本念而妄為。",
    "X38n0695_008:0761b08_1": "恃權勢而橫作。",
    "X38n0695_008:0761b08_2": "制限非法。",
    "X38n0695_008:0761b08_3": "破滅三寶。",
    "X38n0695_008:0761b09_4": "罪若彌天。",
    "X38n0695_008:0761b09_5": "焉名好心而受佛禁戒者乎。",
    "X38n0695_008:0761b10_0": "若佛子。",
    "X38n0695_008:0761b10_1": "皆已信心受佛戒者。",
    "X38n0695_008:0761b10_2": "若國王。",
    "X38n0695_008:0761b10_3": "太子。",
    "X38n0695_008:0761b10_4": "百官。",
    "X38n0695_008:0761b10_5": "四部弟子。",
    "X38n0695_008:0761b11_6": "自恃高貴。",
    "X38n0695_008:0761b11_7": "破滅佛法戒律。",
    "X38n0695_008:0761b11_8": "明作制法。",
    "X38n0695_008:0761b11_9": "制我四部弟子。",
    "X38n0695_008:0761b12_10": "不聽出家行道。",
    "X38n0695_008:0761b12_11": "亦復不聽造立形像。",
    "X38n0695_008:0761b12_12": "佛塔。",
    "X38n0695_008:0761b12_13": "經律。",
    "X38n0695_008:0761b13_0": "立統官制眾使安籍記僧。",
    "X38n0695_008:0761b13_1": "菩薩比丘地立。",
    "X38n0695_008:0761b13_2": "白衣高座。",
    "X38n0695_008:0761b14_0": "廣行非法。",
    "X38n0695_008:0761b14_1": "如兵奴事主。",
    "X38n0695_008:0761b14_2": "而菩薩正應受一切人供養。",
    "X38n0695_008:0761b15_0": "而反為官走使。",
    "X38n0695_008:0761b15_1": "非法非律。",
    "X38n0695_008:0761b15_2": "若國王百官好心受佛戒者。",
    "X38n0695_008:0761b16_3": "莫作是破三寶之罪。",
    "X38n0695_008:0761b16_4": "若故作破法者。",
    "X38n0695_008:0761b16_5": "犯輕垢罪。",
    "X38n0695_008:0761b17_0": "皆已信心受佛戒者。",
    "X38n0695_008:0761b17_1": "此總標能制所制。",
    "X38n0695_008:0761b17_2": "皆已信心受佛正戒也。",
    "X38n0695_008:0761b18_3": "能制即明作制法。",
    "X38n0695_008:0761b18_4": "所制謂為官走使。",
    "X38n0695_008:0761b19_0": "二俱得罪。",
    "X38n0695_008:0761b19_1": "四部弟子者。",
    "X38n0695_008:0761b19_2": "按諸經律。",
    "X38n0695_008:0761b19_3": "即四輩弟子。",
    "X38n0695_008:0761b19_4": "比丘。",
    "X38n0695_008:0761b20_5": "比丘尼。",
    "X38n0695_008:0761b20_6": "優婆塞。",
    "X38n0695_008:0761b20_7": "優婆夷。",
    "X38n0695_008:0761b20_8": "據義疏。",
    "X38n0695_008:0761b20_9": "則居士。",
    "X38n0695_008:0761b20_10": "居士婦。",
    "X38n0695_008:0761b21_0": "童男。",
    "X38n0695_008:0761b21_1": "童女。",
    "X38n0695_008:0761b21_2": "僧尼既已出家。",
    "X38n0695_008:0761b21_3": "復令還俗。",
    "X38n0695_008:0761b21_4": "在家二眾。",
    "X38n0695_008:0761b21_5": "不許出家。",
    "X38n0695_008:0761b22_6": "故云不聽。",
    "X38n0695_008:0761b22_7": "問。",
    "X38n0695_008:0761b22_8": "王官可作制法。",
    "X38n0695_008:0761b22_9": "豈四部亦能制四部耶。",
    "X38n0695_008:0761b23_10": "答。",
    "X38n0695_008:0761b23_11": "或父母。",
    "X38n0695_008:0761b23_12": "兄弟。",
    "X38n0695_008:0761b23_13": "子女。",
    "X38n0695_008:0761b23_14": "互相制限障礙。",
    "X38n0695_008:0761b23_15": "故不聽也。",
    "X38n0695_008:0761b24_16": "如付法藏經云。",
    "X38n0695_008:0761b24_17": "闍夜多尊者。",
    "X38n0695_008:0761b24_18": "詣城乞食。",
    "X38n0695_008:0761b24_19": "見一烏。",
    "X38n0695_008:0761c01_20": "便微笑。",
    "X38n0695_008:0761c01_21": "弟子問之。",
    "X38n0695_008:0761c01_22": "尊者曰。",
    "X38n0695_008:0761c01_23": "過去劫中。",
    "X38n0695_008:0761c01_24": "我欲出家。",
    "X38n0695_008:0761c02_25": "父母不聽。",
    "X38n0695_008:0761c02_26": "強為聘妻。",
    "X38n0695_008:0761c02_27": "得一子六歲。",
    "X38n0695_008:0761c02_28": "我復欲去。",
    "X38n0695_008:0761c02_29": "父母教兒抱住我脚。",
    "X38n0695_008:0761c03_30": "啼哭言。",
    "X38n0695_008:0761c03_31": "父若捨我。",
    "X38n0695_008:0761c03_32": "依誰養活。",
    "X38n0695_008:0761c03_33": "先當殺兒。",
    "X38n0695_008:0761c04_34": "然後可去。",
    "X38n0695_008:0761c04_35": "由此兒故。",
    "X38n0695_008:0761c04_36": "不得出家。",
    "X38n0695_008:0761c04_37": "從是九十一劫。",
    "X38n0695_008:0761c05_38": "流轉六道。",
    "X38n0695_008:0761c05_39": "未曾得見。",
    "X38n0695_008:0761c05_40": "今以道眼觀見彼烏。",
    "X38n0695_008:0761c05_41": "乃是前子。",
    "X38n0695_008:0761c06_42": "愍其愚癡。",
    "X38n0695_008:0761c06_43": "久在生死。",
    "X38n0695_008:0761c06_44": "是以微笑。",
    "X38n0695_008:0761c06_45": "若障人出家。",
    "X38n0695_008:0761c07_46": "罪報惡道。",
    "X38n0695_008:0761c07_47": "後生人中。",
    "X38n0695_008:0761c07_48": "眚盲無目。",
    "X38n0695_008:0761c07_49": "是故智者。",
    "X38n0695_008:0761c07_50": "見人出家。",
    "X38n0695_008:0761c08_51": "方便成就。",
    "X38n0695_008:0761c08_52": "勿作留難。",
    "X38n0695_008:0761c08_53": "又老女人經云。",
    "X38n0695_008:0761c08_54": "時有貧窮老女人。",
    "X38n0695_008:0761c09_55": "聞佛說法。",
    "X38n0695_008:0761c09_56": "心開意解。",
    "X38n0695_008:0761c09_57": "阿難白佛。",
    "X38n0695_008:0761c09_58": "此女人何以智慧乃爾佛言。",
    "X38n0695_008:0761c10_59": "是我前世發意學道時母也。",
    "X38n0695_008:0761c11_0": "又問。",
    "X38n0695_008:0761c11_1": "是母何貧乃爾。",
    "X38n0695_008:0761c11_2": "佛言。",
    "X38n0695_008:0761c11_3": "拘留孫佛時。",
    "X38n0695_008:0761c11_4": "我欲作沙門。",
    "X38n0695_008:0761c12_5": "是母慈愛。",
    "X38n0695_008:0761c12_6": "不聽我去。",
    "X38n0695_008:0761c12_7": "我愁一日不食。",
    "X38n0695_008:0761c12_8": "由是五百世貧。",
    "X38n0695_008:0761c13_9": "今者壽盡。",
    "X38n0695_008:0761c13_10": "當生彌陀佛國。",
    "X38n0695_008:0761c13_11": "如經所說。",
    "X38n0695_008:0761c13_12": "子障父母。",
    "X38n0695_008:0761c14_13": "父母障子。",
    "X38n0695_008:0761c14_14": "感報若是。",
    "X38n0695_008:0761c14_15": "況其夫妻兄弟朋友。",
    "X38n0695_008:0761c14_16": "互相障礙。",
    "X38n0695_008:0761c15_17": "罪當如何。",
    "X38n0695_008:0761c15_18": "不聽出家。",
    "X38n0695_008:0761c15_19": "是滅僧寶也。",
    "X38n0695_008:0761c15_20": "不聽造立形像佛塔。",
    "X38n0695_008:0761c16_21": "是滅佛寶也。",
    "X38n0695_008:0761c16_22": "不聽書寫經律。",
    "X38n0695_008:0761c16_23": "是滅法寶也。",
    "X38n0695_008:0761c17_24": "立統官制眾。",
    "X38n0695_008:0761c17_25": "安籍記僧者。",
    "X38n0695_008:0761c17_26": "安設簿籍。",
    "X38n0695_008:0761c17_27": "記錄僧名。",
    "X38n0695_008:0761c18_0": "同世編戶。",
    "X38n0695_008:0761c18_1": "統官攝僧也。",
    "X38n0695_008:0761c18_2": "白衣高座。",
    "X38n0695_008:0761c18_3": "比丘地立。",
    "X38n0695_008:0761c18_4": "非兵奴之事主如何。",
    "X38n0695_008:0761c19_5": "菩薩乃人天師範。",
    "X38n0695_008:0761c19_6": "說法律令生妙慧。",
    "X38n0695_008:0761c20_7": "受供養使種福田。",
    "X38n0695_008:0761c20_8": "如子之事父。",
    "X38n0695_008:0761c20_9": "猶臣之敬君。",
    "X38n0695_008:0761c20_10": "而甘自媟。",
    "X38n0695_008:0761c21_11": "反為官走使。",
    "X38n0695_008:0761c21_12": "非法非律如何。",
    "X38n0695_008:0761c21_13": "縱王臣強逼。",
    "X38n0695_008:0761c22_0": "而僧可殺。",
    "X38n0695_008:0761c22_1": "不可辱。",
    "X38n0695_008:0761c22_2": "即一死而存正教。",
    "X38n0695_008:0761c22_3": "何苟生以壞法門哉。",
    "X38n0695_008:0761c23_4": "莫作是破三寶之罪者。",
    "X38n0695_008:0761c23_5": "謂王臣曾已好心受佛正戒。",
    "X38n0695_008:0761c24_6": "正當興隆三寶。",
    "X38n0695_008:0761c24_7": "護法為心。",
    "X38n0695_008:0761c24_8": "始不忘靈山涅槃會上。",
    "X38n0695_008:0762a01_9": "諄諄付囑之旨。",
    "X38n0695_008:0762a01_10": "而反作破滅三寶之罪。",
    "X38n0695_008:0762a02_0": "非忤逆如何。",
    "X38n0695_008:0762a02_1": "問。",
    "X38n0695_008:0762a02_2": "既云是逆。",
    "X38n0695_008:0762a02_3": "云何但犯輕垢。",
    "X38n0695_008:0762a02_4": "答。",
    "X38n0695_008:0762a02_5": "以王臣在家。",
    "X38n0695_008:0762a03_6": "未堪制重。",
    "X38n0695_008:0762a03_7": "而其得罪。",
    "X38n0695_008:0762a03_8": "感報實重也。",
    "X38n0695_008:0762a03_9": "仁王經云。",
    "X38n0695_008:0762a04_10": "佛告波斯匿王。",
    "X38n0695_008:0762a04_11": "後五濁世。",
    "X38n0695_008:0762a04_12": "國王王子大臣。",
    "X38n0695_008:0762a04_13": "自恃高貴破滅吾法。",
    "X38n0695_008:0762a05_14": "橫作法制。",
    "X38n0695_008:0762a05_15": "不依佛教。",
    "X38n0695_008:0762a05_16": "制我弟子。",
    "X38n0695_008:0762a05_17": "不聽出家。",
    "X38n0695_008:0762a06_18": "造佛塔寺。",
    "X38n0695_008:0762a06_19": "立統官制。",
    "X38n0695_008:0762a06_20": "安籍記錄僧事。",
    "X38n0695_008:0762a06_21": "比丘地立。",
    "X38n0695_008:0762a07_22": "白衣高座。",
    "X38n0695_008:0762a07_23": "又云。",
    "X38n0695_008:0762a07_24": "未來世中。",
    "X38n0695_008:0762a07_25": "四部弟子。",
    "X38n0695_008:0762a07_26": "諸小國王太子。",
    "X38n0695_008:0762a08_27": "乃是住持護三寶者。",
    "X38n0695_008:0762a08_28": "轉更破滅三寶。",
    "X38n0695_008:0762a08_29": "如師子身中蟲。",
    "X38n0695_008:0762a09_30": "自食師子肉。",
    "X38n0695_008:0762a09_31": "非外道也。",
    "X38n0695_008:0762a09_32": "各壞吾法。",
    "X38n0695_008:0762a09_33": "得大罪過。",
    "X38n0695_008:0762a10_34": "正法衰薄。",
    "X38n0695_008:0762a10_35": "民無正行。",
    "X38n0695_008:0762a10_36": "以漸為惡。",
    "X38n0695_008:0762a10_37": "其壽日減。",
    "X38n0695_008:0762a10_38": "無復孝子。",
    "X38n0695_008:0762a11_39": "六親不和。",
    "X38n0695_008:0762a11_40": "天神不祐。",
    "X38n0695_008:0762a11_41": "疾疫惡鬼。",
    "X38n0695_008:0762a11_42": "日來侵害。",
    "X38n0695_008:0762a12_0": "死入地獄餓鬼畜生。",
    "X38n0695_008:0762a12_1": "如經所說。",
    "X38n0695_008:0762a12_2": "宛同今制。",
    "X38n0695_008:0762a12_3": "其好心受佛戒者。",
    "X38n0695_008:0762a13_4": "時當自慎也。",
    "X38n0695_008:0762a14_0": "○第四十八破法戒。",
    "X38n0695_008:0762a15_0": "僧有過犯。",
    "X38n0695_008:0762a15_1": "自有如來法律治罰。",
    "X38n0695_008:0762a15_2": "而反令王官陵辱內眾。",
    "X38n0695_008:0762a16_3": "破壞正教。",
    "X38n0695_008:0762a16_4": "深玷法門。",
    "X38n0695_008:0762a16_5": "非大士護法心慈悲心。",
    "X38n0695_008:0762a17_0": "若佛子。",
    "X38n0695_008:0762a17_1": "以好心出家。",
    "X38n0695_008:0762a17_2": "而為名聞利養。",
    "X38n0695_008:0762a17_3": "於國王百官前。",
    "X38n0695_008:0762a18_0": "說佛戒者。",
    "X38n0695_008:0762a18_1": "橫與比丘。",
    "X38n0695_008:0762a18_2": "比丘尼。",
    "X38n0695_008:0762a18_3": "菩薩戒弟子。",
    "X38n0695_008:0762a18_4": "作繫縛事。",
    "X38n0695_008:0762a19_0": "如獄囚法。",
    "X38n0695_008:0762a19_1": "如兵奴之法。",
    "X38n0695_008:0762a19_2": "如師子身中蟲。",
    "X38n0695_008:0762a19_3": "自食師子肉。",
    "X38n0695_008:0762a20_0": "非餘外蟲。",
    "X38n0695_008:0762a20_1": "如是佛子。",
    "X38n0695_008:0762a20_2": "自破佛法。",
    "X38n0695_008:0762a20_3": "非外道天魔能破。",
    "X38n0695_008:0762a21_0": "本以好心出家受佛正戒。",
    "X38n0695_008:0762a21_1": "故為王官所重。",
    "X38n0695_008:0762a21_2": "後被名利所迷。",
    "X38n0695_008:0762a22_3": "自失初志。",
    "X38n0695_008:0762a22_4": "內雖毀戒。",
    "X38n0695_008:0762a22_5": "外現威德。",
    "X38n0695_008:0762a22_6": "是以凡有言說。",
    "X38n0695_008:0762a23_7": "王官無不聽用。",
    "X38n0695_008:0762a23_8": "而令作世間治罰。",
    "X38n0695_008:0762a23_9": "使內眾弟子。",
    "X38n0695_008:0762a24_10": "無辜受罪。",
    "X38n0695_008:0762a24_11": "或繫縛手足。",
    "X38n0695_008:0762a24_12": "禁閉身形。",
    "X38n0695_008:0762a24_13": "故如獄囚之法。",
    "X38n0695_008:0762b01_14": "或無禮輕賤訶責。",
    "X38n0695_008:0762b01_15": "故如兵奴之法。",
    "X38n0695_008:0762b01_16": "種種刑辱內眾。",
    "X38n0695_008:0762b02_17": "於心奚忍。",
    "X38n0695_008:0762b02_18": "雖自不顧身後遺殃。",
    "X38n0695_008:0762b02_19": "而且現前寧無羞顏。",
    "X38n0695_008:0762b03_20": "何以貪名利。",
    "X38n0695_008:0762b03_21": "而自敗己德。",
    "X38n0695_008:0762b03_22": "恃王官。",
    "X38n0695_008:0762b03_23": "而喪本良心。",
    "X38n0695_008:0762b04_24": "依佛法中得利。",
    "X38n0695_008:0762b04_25": "不念報恩。",
    "X38n0695_008:0762b04_26": "而反加害。",
    "X38n0695_008:0762b04_27": "破壞法門。",
    "X38n0695_008:0762b05_0": "正所謂惡魔比丘也。",
    "X38n0695_008:0762b05_1": "師子蟲者。",
    "X38n0695_008:0762b05_2": "師子乃百獸之王。",
    "X38n0695_008:0762b06_0": "故無有禽獸。",
    "X38n0695_008:0762b06_1": "能食師子者。",
    "X38n0695_008:0762b06_2": "惟師子身中生蟲。",
    "X38n0695_008:0762b06_3": "能食師子肉。",
    "X38n0695_008:0762b07_4": "非外蟲能食。",
    "X38n0695_008:0762b07_5": "如來正法。",
    "X38n0695_008:0762b07_6": "天魔受化。",
    "X38n0695_008:0762b07_7": "外道歸心。",
    "X38n0695_008:0762b08_8": "故無能破壞。",
    "X38n0695_008:0762b08_9": "惟於佛法中出家。",
    "X38n0695_008:0762b08_10": "不依佛教。",
    "X38n0695_008:0762b08_11": "乃能破壞耳。",
    "X38n0695_008:0762b09_12": "若出家五眾有過。",
    "X38n0695_008:0762b09_13": "當以佛法律治罰。",
    "X38n0695_008:0762b09_14": "或使懺悔。",
    "X38n0695_008:0762b10_15": "或作驅擯等羯磨。",
    "X38n0695_008:0762b10_16": "豈宜以王法陵辱。",
    "X38n0695_008:0762b10_17": "致使王官損福。",
    "X38n0695_008:0762b11_18": "善神出境。",
    "X38n0695_008:0762b11_19": "是則非獨破法。",
    "X38n0695_008:0762b11_20": "而復令國作難。",
    "X38n0695_008:0762b12_0": "經有明文。",
    "X38n0695_008:0762b12_1": "寧無恐懼。",
    "X38n0695_008:0762b13_0": "若受佛戒者。",
    "X38n0695_008:0762b13_1": "應護佛戒。",
    "X38n0695_008:0762b13_2": "如念一子。",
    "X38n0695_008:0762b13_3": "如事父母。",
    "X38n0695_008:0762b13_4": "不可毀破。",
    "X38n0695_008:0762b14_5": "而菩薩聞外道惡人。",
    "X38n0695_008:0762b14_6": "以惡言謗破佛戒之聲。",
    "X38n0695_008:0762b14_7": "如三百矛刺心。",
    "X38n0695_008:0762b15_8": "千刀萬杖。",
    "X38n0695_008:0762b15_9": "打拍其身。",
    "X38n0695_008:0762b15_10": "等無有異。",
    "X38n0695_008:0762b15_11": "寧自入地獄。",
    "X38n0695_008:0762b16_12": "經於百劫。",
    "X38n0695_008:0762b16_13": "而不一聞惡人。",
    "X38n0695_008:0762b16_14": "以惡言謗破佛戒之聲。",
    "X38n0695_008:0762b17_0": "而況自破佛戒。",
    "X38n0695_008:0762b17_1": "教人破法因緣。",
    "X38n0695_008:0762b17_2": "亦無孝順之心。",
    "X38n0695_008:0762b17_3": "若故作者。",
    "X38n0695_008:0762b18_4": "犯輕垢罪。",
    "X38n0695_008:0762b19_0": "法身由戒而成。",
    "X38n0695_008:0762b19_1": "利生由戒而度。",
    "X38n0695_008:0762b19_2": "故應保護。",
    "X38n0695_008:0762b19_3": "如父母之慈念一子。",
    "X38n0695_008:0762b20_4": "念念在懷。",
    "X38n0695_008:0762b20_5": "猶子之敬事父母。",
    "X38n0695_008:0762b20_6": "事事無逆。",
    "X38n0695_008:0762b21_7": "如是慈念敬事於戒。",
    "X38n0695_008:0762b21_8": "則無有毀破之者。",
    "X38n0695_008:0762b21_9": "菩薩寧受三百萬杖。",
    "X38n0695_008:0762b22_10": "百劫之劇苦。",
    "X38n0695_008:0762b22_11": "不忍一聞謗破佛戒之聲。",
    "X38n0695_008:0762b23_12": "何以故。",
    "X38n0695_008:0762b23_13": "雖楚痛萬端。",
    "X38n0695_008:0762b23_14": "惟是苦我一身。",
    "X38n0695_008:0762b23_15": "謗戒即破滅正教。",
    "X38n0695_008:0762b24_16": "壞佛法身。",
    "X38n0695_008:0762b24_17": "使無量眾生而失信心。",
    "X38n0695_008:0762b24_18": "沉淪苦海。",
    "X38n0695_008:0762c01_19": "不得解脫。",
    "X38n0695_008:0762c01_20": "其隨謗者。",
    "X38n0695_008:0762c01_21": "永墮阿鼻。",
    "X38n0695_008:0762c01_22": "然聞聲猶且乃爾。",
    "X38n0695_008:0762c02_23": "況自作破壞佛戒。",
    "X38n0695_008:0762c02_24": "復教王臣作破壞佛法因緣。",
    "X38n0695_008:0762c03_0": "治辱僧眾。",
    "X38n0695_008:0762c03_1": "自既不知護法。",
    "X38n0695_008:0762c03_2": "而反作破法之事。",
    "X38n0695_008:0762c03_3": "是為忤逆三寶。",
    "X38n0695_008:0762c04_4": "無孝順心。",
    "X38n0695_008:0762c04_5": "故得罪也。",
    "X38n0695_008:0762c04_6": "大集經云。",
    "X38n0695_008:0762c04_7": "佛言。",
    "X38n0695_008:0762c04_8": "若有眾生。",
    "X38n0695_008:0762c05_9": "為我出家。",
    "X38n0695_008:0762c05_10": "剃鬚髮著袈裟。",
    "X38n0695_008:0762c05_11": "設不持戒。",
    "X38n0695_008:0762c05_12": "彼等悉已為涅槃印之所印也。",
    "X38n0695_008:0762c06_13": "若有以非法。",
    "X38n0695_008:0762c06_14": "而作惱亂。",
    "X38n0695_008:0762c07_0": "罵辱毀訾。",
    "X38n0695_008:0762c07_1": "以手刀杖打縛斫截。",
    "X38n0695_008:0762c07_2": "若奪衣鉢。",
    "X38n0695_008:0762c07_3": "及種種資生具者。",
    "X38n0695_008:0762c08_4": "是人則壞三世諸佛真實報身。",
    "X38n0695_008:0762c08_5": "則挑一切人天眼目。",
    "X38n0695_008:0762c09_6": "時大梵天王白佛言。",
    "X38n0695_008:0762c09_7": "若為佛出家。",
    "X38n0695_008:0762c09_8": "剃鬚髮著袈裟。",
    "X38n0695_008:0762c10_9": "不受戒。",
    "X38n0695_008:0762c10_10": "受已毀犯。",
    "X38n0695_008:0762c10_11": "其國王與作惱亂罵辱打縛者。",
    "X38n0695_008:0762c11_12": "得幾許罪。",
    "X38n0695_008:0762c11_13": "佛言。",
    "X38n0695_008:0762c11_14": "大梵。",
    "X38n0695_008:0762c11_15": "我今為汝且略說之。",
    "X38n0695_008:0762c12_16": "若有人於萬億佛所。",
    "X38n0695_008:0762c12_17": "出其身血。",
    "X38n0695_008:0762c12_18": "於意云何。",
    "X38n0695_008:0762c12_19": "是人得罪寧為多不。",
    "X38n0695_008:0762c13_20": "梵王白言。",
    "X38n0695_008:0762c13_21": "若人但出一佛身血。",
    "X38n0695_008:0762c14_0": "得無間罪。",
    "X38n0695_008:0762c14_1": "尚多無量。",
    "X38n0695_008:0762c14_2": "不可算數。",
    "X38n0695_008:0762c14_3": "墮於阿鼻大地獄中。",
    "X38n0695_008:0762c15_4": "何況具出萬億諸佛身血。",
    "X38n0695_008:0762c15_5": "終無有能廣說彼人罪業果報。",
    "X38n0695_008:0762c16_6": "唯除如來。",
    "X38n0695_008:0762c16_7": "佛言。",
    "X38n0695_008:0762c16_8": "大梵。",
    "X38n0695_008:0762c16_9": "若有惱亂罵辱打縛剃鬚髮著袈裟片。",
    "X38n0695_008:0762c17_10": "不受戒。",
    "X38n0695_008:0762c17_11": "受而犯者。",
    "X38n0695_008:0762c17_12": "得罪多於彼。",
    "X38n0695_008:0762c18_13": "何以故。",
    "X38n0695_008:0762c18_14": "是人猶能為諸人天。",
    "X38n0695_008:0762c18_15": "示涅槃道。",
    "X38n0695_008:0762c18_16": "是人已於三寶中。",
    "X38n0695_008:0762c19_17": "心得敬信。",
    "X38n0695_008:0762c19_18": "勝於一切九十五種外道。",
    "X38n0695_008:0762c19_19": "其人必速能入涅槃。",
    "X38n0695_008:0762c20_20": "勝於一切在家俗人。",
    "X38n0695_008:0762c20_21": "唯除在家得忍者。",
    "X38n0695_008:0762c21_22": "是故人天應當供養。",
    "X38n0695_008:0762c21_23": "何況具能持戒。",
    "X38n0695_008:0762c21_24": "三業相應者。",
    "X38n0695_008:0762c22_25": "其有王臣見有於佛法中出家者。",
    "X38n0695_008:0762c22_26": "作大罪業。",
    "X38n0695_008:0762c23_27": "但擯出國。",
    "X38n0695_008:0762c23_28": "不得鞭打。",
    "X38n0695_008:0762c23_29": "何況鞭打出家具持戒者。",
    "X38n0695_008:0762c24_0": "十輪經云。",
    "X38n0695_008:0762c24_1": "佛言。",
    "X38n0695_008:0762c24_2": "若有破戒比丘。",
    "X38n0695_008:0762c24_3": "如敗膿血。",
    "X38n0695_008:0762c24_4": "退失墮落聖道果證。",
    "X38n0695_008:0763a01_5": "為諸煩惱結使所壞。",
    "X38n0695_008:0763a01_6": "猶能開示一切天龍人非人等。",
    "X38n0695_008:0763a02_7": "無量功德。",
    "X38n0695_008:0763a02_8": "珍寶伏藏。",
    "X38n0695_008:0763a02_9": "是以出家。",
    "X38n0695_008:0763a02_10": "若持戒。",
    "X38n0695_008:0763a03_11": "若破戒。",
    "X38n0695_008:0763a03_12": "我悉不聽國王大臣宰官。",
    "X38n0695_008:0763a03_13": "讁罰繫閉鞭杖。",
    "X38n0695_008:0763a04_14": "乃至斷命。",
    "X38n0695_008:0763a04_15": "況復餘輕犯小威儀。",
    "X38n0695_008:0763a04_16": "破戒比丘。",
    "X38n0695_008:0763a04_17": "雖是死人。",
    "X38n0695_008:0763a05_18": "有戒餘力。",
    "X38n0695_008:0763a05_19": "猶如牛黃。",
    "X38n0695_008:0763a05_20": "是牛雖死。",
    "X38n0695_008:0763a05_21": "人故取之。",
    "X38n0695_008:0763a06_0": "亦如麝香。",
    "X38n0695_008:0763a06_1": "死後有用。",
    "X38n0695_008:0763a06_2": "能大利益一切眾生。",
    "X38n0695_008:0763a06_3": "惡行比丘。",
    "X38n0695_008:0763a07_4": "雖犯禁戒。",
    "X38n0695_008:0763a07_5": "其戒勢力。",
    "X38n0695_008:0763a07_6": "猶利益無量人天。",
    "X38n0695_008:0763a07_7": "譬如燒香。",
    "X38n0695_008:0763a08_8": "香體雖壞。",
    "X38n0695_008:0763a08_9": "熏他令香。",
    "X38n0695_008:0763a08_10": "破戒比丘。",
    "X38n0695_008:0763a08_11": "亦復如是。",
    "X38n0695_008:0763a08_12": "自墮惡道。",
    "X38n0695_008:0763a09_13": "能令眾生增長善根。",
    "X38n0695_008:0763a09_14": "以是因緣。",
    "X38n0695_008:0763a09_15": "一切白衣不應侵毀。",
    "X38n0695_008:0763a10_16": "輕蔑破戒比丘。",
    "X38n0695_008:0763a10_17": "皆當尊重守護。",
    "X38n0695_008:0763a10_18": "心地觀經云。",
    "X38n0695_008:0763a11_19": "復有一類福田僧。",
    "X38n0695_008:0763a11_20": "於佛舍利。",
    "X38n0695_008:0763a11_21": "及佛形像。",
    "X38n0695_008:0763a11_22": "并諸法僧。",
    "X38n0695_008:0763a12_23": "聖所制戒。",
    "X38n0695_008:0763a12_24": "深生敬信。",
    "X38n0695_008:0763a12_25": "自無邪見。",
    "X38n0695_008:0763a12_26": "令他亦然。",
    "X38n0695_008:0763a12_27": "能宣正法。",
    "X38n0695_008:0763a13_28": "讚歎一乘。",
    "X38n0695_008:0763a13_29": "深信因果。",
    "X38n0695_008:0763a13_30": "常發善願。",
    "X38n0695_008:0763a13_31": "隨其過犯。",
    "X38n0695_008:0763a13_32": "悔除業障。",
    "X38n0695_008:0763a14_33": "當知是人。",
    "X38n0695_008:0763a14_34": "信三寶力。",
    "X38n0695_008:0763a14_35": "勝諸外道。",
    "X38n0695_008:0763a14_36": "百千萬倍。",
    "X38n0695_008:0763a15_0": "亦勝四種轉輪聖王。",
    "X38n0695_008:0763a15_1": "何況餘類一切眾生。",
    "X38n0695_008:0763a15_2": "如鬱金華。",
    "X38n0695_008:0763a16_3": "雖然萎悴。",
    "X38n0695_008:0763a16_4": "猶勝一切諸雜類華。",
    "X38n0695_008:0763a16_5": "正見比丘。",
    "X38n0695_008:0763a16_6": "亦復如是。",
    "X38n0695_008:0763a17_7": "勝餘眾生。",
    "X38n0695_008:0763a17_8": "百千萬倍。",
    "X38n0695_008:0763a17_9": "雖毀禁戒。",
    "X38n0695_008:0763a17_10": "不壞正見。",
    "X38n0695_008:0763a17_11": "以是因緣。",
    "X38n0695_008:0763a18_12": "名福田僧。",
    "X38n0695_008:0763a18_13": "若供養如是福田僧者。",
    "X38n0695_008:0763a18_14": "所得福德。",
    "X38n0695_008:0763a19_15": "無有窮盡。",
    "X38n0695_008:0763a19_16": "大集經云。",
    "X38n0695_008:0763a19_17": "爾時一切天龍八部神等。",
    "X38n0695_008:0763a20_0": "得增上信已。",
    "X38n0695_008:0763a20_1": "白佛言。",
    "X38n0695_008:0763a20_2": "我等一切。",
    "X38n0695_008:0763a20_3": "從今以往。",
    "X38n0695_008:0763a20_4": "護持正法。",
    "X38n0695_008:0763a21_5": "若諸國王。",
    "X38n0695_008:0763a21_6": "見有為佛出家。",
    "X38n0695_008:0763a21_7": "受持禁戒。",
    "X38n0695_008:0763a21_8": "或不受戒。",
    "X38n0695_008:0763a22_0": "或受而毀犯。",
    "X38n0695_008:0763a22_1": "如其事緣。",
    "X38n0695_008:0763a22_2": "治其身罪。",
    "X38n0695_008:0763a22_3": "鞭打之者。",
    "X38n0695_008:0763a22_4": "我等不復護持養育。",
    "X38n0695_008:0763a23_5": "如是國王。",
    "X38n0695_008:0763a23_6": "捨離彼國。",
    "X38n0695_008:0763a23_7": "以捨離故。",
    "X38n0695_008:0763a23_8": "令其國土。",
    "X38n0695_008:0763a24_9": "而有種種疾疫。",
    "X38n0695_008:0763a24_10": "饑饉。",
    "X38n0695_008:0763a24_11": "刀兵。",
    "X38n0695_008:0763a24_12": "俱起。",
    "X38n0695_008:0763a24_13": "非時風雨。",
    "X38n0695_008:0763b01_0": "亢旱毒熱。",
    "X38n0695_008:0763b01_1": "傷害苗稼。",
    "X38n0695_008:0763b01_2": "令佛出家弟子。",
    "X38n0695_008:0763b01_3": "悉向他國。",
    "X38n0695_008:0763b01_4": "使其國土。",
    "X38n0695_008:0763b02_5": "空無福田。",
    "X38n0695_008:0763b02_6": "若有佛弟子。",
    "X38n0695_008:0763b02_7": "但著袈裟片者。",
    "X38n0695_008:0763b02_8": "若有宰官鞭打彼等。",
    "X38n0695_008:0763b03_9": "其王不遮護者。",
    "X38n0695_008:0763b03_10": "我等亦當出其國土。",
    "X38n0695_008:0763b04_11": "問。",
    "X38n0695_008:0763b04_12": "誠如經說。",
    "X38n0695_008:0763b04_13": "天龍尚乃爾護法。",
    "X38n0695_008:0763b04_14": "豈王臣而不護持。",
    "X38n0695_008:0763b05_15": "奈有貧窮避難。",
    "X38n0695_008:0763b05_16": "竄人法門。",
    "X38n0695_008:0763b05_17": "不守佛戒。",
    "X38n0695_008:0763b05_18": "冐犯國法。",
    "X38n0695_008:0763b06_19": "諫之而不從。",
    "X38n0695_008:0763b06_20": "擯之而不去。",
    "X38n0695_008:0763b06_21": "內律治而不得。",
    "X38n0695_008:0763b06_22": "則將如之何。",
    "X38n0695_008:0763b07_23": "答。",
    "X38n0695_008:0763b07_24": "若果有大罪。",
    "X38n0695_008:0763b07_25": "玷辱三寶者。",
    "X38n0695_008:0763b07_26": "寧除一人。",
    "X38n0695_008:0763b07_27": "而全三寶。",
    "X38n0695_008:0763b08_28": "不可全一人。",
    "X38n0695_008:0763b08_29": "而禍及三寶。",
    "X38n0695_008:0763b08_30": "如大集經云。",
    "X38n0695_008:0763b08_31": "寧捨身命。",
    "X38n0695_008:0763b09_32": "護一如法比丘。",
    "X38n0695_008:0763b09_33": "不護諸惡比丘。",
    "X38n0695_008:0763b09_34": "是王捨身當生淨土中。",
    "X38n0695_008:0763b10_35": "若隨惡者。",
    "X38n0695_008:0763b10_36": "是王無量世中。",
    "X38n0695_008:0763b10_37": "不復人身。",
    "X38n0695_008:0763b11_0": "不治則斷三寶種。",
    "X38n0695_008:0763b11_1": "奪眾生眼。",
    "X38n0695_008:0763b11_2": "犯過比丘。",
    "X38n0695_008:0763b11_3": "應須治者。",
    "X38n0695_008:0763b12_0": "或不與語。",
    "X38n0695_008:0763b12_1": "或不共坐。",
    "X38n0695_008:0763b12_2": "或擯出一國。",
    "X38n0695_008:0763b12_3": "乃至四國。",
    "X38n0695_008:0763b12_4": "有佛法處。",
    "X38n0695_008:0763b13_5": "治如是惡比丘。",
    "X38n0695_008:0763b13_6": "諸善比丘。",
    "X38n0695_008:0763b13_7": "得安樂受法故。",
    "X38n0695_008:0763b13_8": "使佛法久住不滅。",
    "X38n0695_008:0763b14_9": "涅槃經云。",
    "X38n0695_008:0763b14_10": "佛言。",
    "X38n0695_008:0763b14_11": "譬如國王。",
    "X38n0695_008:0763b14_12": "諸羣臣等。",
    "X38n0695_008:0763b15_13": "有犯王法。",
    "X38n0695_008:0763b15_14": "隨罪誅戮。",
    "X38n0695_008:0763b15_15": "而不捨置。",
    "X38n0695_008:0763b15_16": "如來世尊。",
    "X38n0695_008:0763b15_17": "不如是也。",
    "X38n0695_008:0763b16_18": "於毀法者。",
    "X38n0695_008:0763b16_19": "與作驅遣羯磨。",
    "X38n0695_008:0763b16_20": "訶責羯磨。",
    "X38n0695_008:0763b16_21": "為欲示諸惡行之人。",
    "X38n0695_008:0763b17_22": "有果報故。",
    "X38n0695_008:0763b17_23": "有持戒比丘。",
    "X38n0695_008:0763b17_24": "護持正法。",
    "X38n0695_008:0763b17_25": "見壞法者。",
    "X38n0695_008:0763b18_26": "即能驅遣。",
    "X38n0695_008:0763b18_27": "訶責徵治。",
    "X38n0695_008:0763b18_28": "當知是人。",
    "X38n0695_008:0763b18_29": "得福無量。",
    "X38n0695_008:0763b19_0": "不可稱計。",
    "X38n0695_008:0763b19_1": "勝鬘經云。",
    "X38n0695_008:0763b19_2": "佛言。",
    "X38n0695_008:0763b19_3": "菩薩所有恒河沙數。",
    "X38n0695_008:0763b19_4": "無量行願。",
    "X38n0695_008:0763b20_5": "皆應攝入一大願中。",
    "X38n0695_008:0763b20_6": "所謂護持正法。",
    "X38n0695_008:0763b20_7": "護持正法者。",
    "X38n0695_008:0763b21_8": "是大境界。",
    "X38n0695_008:0763b21_9": "乃至少護持正法。",
    "X38n0695_008:0763b21_10": "令魔波旬得大憂惱。",
    "X38n0695_008:0763b22_11": "我不見餘一善法。",
    "X38n0695_008:0763b22_12": "能令惡魔生此憂惱。",
    "X38n0695_008:0763b22_13": "惟少護持正法之者。",
    "X38n0695_008:0763b23_14": "按唐書。",
    "X38n0695_008:0763b23_15": "顯慶元年五月。",
    "X38n0695_008:0763b23_16": "敕天下僧尼。",
    "X38n0695_008:0763b24_17": "有犯法者。",
    "X38n0695_008:0763b24_18": "以僧律治之。",
    "X38n0695_008:0763b24_19": "不得與民同科。",
    "X38n0695_008:0763b24_20": "斯誠聖王賢臣。",
    "X38n0695_008:0763c01_21": "不忘靈山之囑。",
    "X38n0695_008:0763c01_22": "王臣如此尊重三寶。",
    "X38n0695_008:0763c01_23": "護持法門。",
    "X38n0695_008:0763c02_24": "而出家者。",
    "X38n0695_008:0763c02_25": "反作破法事。",
    "X38n0695_008:0763c02_26": "實為僧中之大賊。",
    "X38n0695_008:0763c03_0": "法門之惡魔。",
    "X38n0695_008:0763c03_1": "經云。",
    "X38n0695_008:0763c03_2": "毀犯禁戒。",
    "X38n0695_008:0763c03_3": "猶能為諸人天。",
    "X38n0695_008:0763c03_4": "示涅槃道者。",
    "X38n0695_008:0763c04_5": "謂其雖為煩惱所逼。",
    "X38n0695_008:0763c04_6": "毀犯於一時。",
    "X38n0695_008:0763c04_7": "然戒破而見不破。",
    "X38n0695_008:0763c05_8": "恒說正法。",
    "X38n0695_008:0763c05_9": "時懷慚愧。",
    "X38n0695_008:0763c05_10": "故云其已於三寶中。",
    "X38n0695_008:0763c06_11": "心得信敬。",
    "X38n0695_008:0763c06_12": "又能讚歎一乘。",
    "X38n0695_008:0763c06_13": "深信因果。",
    "X38n0695_008:0763c06_14": "故瓔珞經云。",
    "X38n0695_008:0763c07_15": "捨戒不捨大願。",
    "X38n0695_008:0763c07_16": "破戒不破正見。",
    "X38n0695_008:0763c07_17": "斯人終得還復清淨。",
    "X38n0695_008:0763c08_18": "優波離問經云。",
    "X38n0695_008:0763c08_19": "住大乘菩薩。",
    "X38n0695_008:0763c08_20": "於初日分時。",
    "X38n0695_008:0763c08_21": "有毀犯罪。",
    "X38n0695_008:0763c09_22": "當中日分時。",
    "X38n0695_008:0763c09_23": "不捨行一切智心。",
    "X38n0695_008:0763c09_24": "如是菩薩得戒蘊具足。",
    "X38n0695_008:0763c10_25": "若中日分時。",
    "X38n0695_008:0763c10_26": "有毀犯罪。",
    "X38n0695_008:0763c10_27": "當後日分時。",
    "X38n0695_008:0763c11_0": "不捨行一切智心。",
    "X38n0695_008:0763c11_1": "則菩薩戒蘊。",
    "X38n0695_008:0763c11_2": "亦復具足。",
    "X38n0695_008:0763c11_3": "非同今者無般若慧。",
    "X38n0695_008:0763c12_4": "自謂有智。",
    "X38n0695_008:0763c12_5": "常作惡業。",
    "X38n0695_008:0763c12_6": "不畏後世。",
    "X38n0695_008:0763c12_7": "撥無因果。",
    "X38n0695_008:0763c13_8": "無慚無愧。",
    "X38n0695_008:0763c13_9": "邪見之徒。",
    "X38n0695_008:0763c13_10": "可比也。",
    "X38n0695_008:0763c13_11": "今時復有爭占田地。",
    "X38n0695_008:0763c14_12": "及住處等。",
    "X38n0695_008:0763c14_13": "躬持詞狀。",
    "X38n0695_008:0763c14_14": "詣於公庭。",
    "X38n0695_008:0763c14_15": "而甘為屈膝。",
    "X38n0695_008:0763c15_0": "勝則猶恨責彼不深。",
    "X38n0695_008:0763c15_1": "負則自取刑辱。",
    "X38n0695_008:0763c15_2": "大玷僧倫。",
    "X38n0695_008:0763c15_3": "了無羞愧。",
    "X38n0695_008:0763c16_4": "猶云我受菩薩大戒。",
    "X38n0695_008:0763c16_5": "誠可恥也。",
    "X38n0695_008:0763c17_0": "如是九戒。",
    "X38n0695_008:0763c17_1": "應當學。",
    "X38n0695_008:0763c17_2": "敬心奉持。",
    "X38n0695_008:0763c18_0": "從揀擇受戒戒。",
    "X38n0695_008:0763c18_1": "至此破法之九戒。",
    "X38n0695_008:0763c18_2": "應一一習學。",
    "X38n0695_008:0763c18_3": "恭敬奉持。",
    "X38n0695_008:0763c19_4": "不可暫忘也。",
    "X38n0695_008:0763c20_0": "○三總結。",
    "X38n0695_008:0763c21_0": "諸佛子。",
    "X38n0695_008:0763c21_1": "是四十八輕戒。",
    "X38n0695_008:0763c21_2": "汝等受持。",
    "X38n0695_008:0763c21_3": "過去諸菩薩已誦。",
    "X38n0695_008:0763c22_0": "未來諸菩薩當誦。",
    "X38n0695_008:0763c22_1": "現在諸菩薩今誦。",
    "X38n0695_008:0763c23_0": "前已一一勸持。",
    "X38n0695_008:0763c23_1": "今復總舉三世菩薩誦以勸持。",
    "X38n0695_008:0763c23_2": "可謂大悲諄諄慈誨無倦。",
    "X38n0695_008:0763c24_3": "雖粉身碎骨。",
    "X38n0695_008:0763c24_4": "亦奚足云報哉。",
    "X38n0695_008:0764a02_0": "●三流通(分二)　初正囑流通　二結頌迴向流通。",
    "X38n0695_008:0764a03_0": "○初正囑流通。",
    "X38n0695_008:0764a04_0": "諸佛子聽。",
    "X38n0695_008:0764a04_1": "十重四十八輕戒。",
    "X38n0695_008:0764a04_2": "三世諸佛已誦。",
    "X38n0695_008:0764a04_3": "當誦。",
    "X38n0695_008:0764a04_4": "今誦。",
    "X38n0695_008:0764a05_5": "我今亦如是誦。",
    "X38n0695_008:0764a05_6": "汝等一切大眾。",
    "X38n0695_008:0764a05_7": "若國王王子百官。",
    "X38n0695_008:0764a06_0": "比丘比丘尼。",
    "X38n0695_008:0764a06_1": "信男信女。",
    "X38n0695_008:0764a06_2": "受持菩薩戒者。",
    "X38n0695_008:0764a06_3": "應受持。",
    "X38n0695_008:0764a06_4": "讀誦。",
    "X38n0695_008:0764a07_0": "解說。",
    "X38n0695_008:0764a07_1": "書寫佛性常住戒卷。",
    "X38n0695_008:0764a07_2": "流通三世一切眾生。",
    "X38n0695_008:0764a07_3": "化化不絕。",
    "X38n0695_008:0764a08_4": "得見千佛。",
    "X38n0695_008:0764a08_5": "為千佛授手。",
    "X38n0695_008:0764a08_6": "世世不墮惡道八難。",
    "X38n0695_008:0764a08_7": "常生人道天中。",
    "X38n0695_008:0764a10_0": "此是釋迦如來。",
    "X38n0695_008:0764a10_1": "付囑在座道俗大眾。",
    "X38n0695_008:0764a10_2": "令流通此戒。",
    "X38n0695_008:0764a11_0": "以此五十八戒。",
    "X38n0695_008:0764a11_1": "是諸佛之本源心地。",
    "X38n0695_008:0764a11_2": "菩薩眾生成佛之根本。",
    "X38n0695_008:0764a12_3": "故三世諸佛。",
    "X38n0695_008:0764a12_4": "及今佛皆誦。",
    "X38n0695_008:0764a12_5": "汝等一切在會大眾。",
    "X38n0695_008:0764a13_6": "受菩薩戒者。",
    "X38n0695_008:0764a13_7": "囑令行五事。",
    "X38n0695_008:0764a13_8": "一受持莫失。",
    "X38n0695_008:0764a13_9": "二闇讀通利。",
    "X38n0695_008:0764a14_10": "三朗誦令聞。",
    "X38n0695_008:0764a14_11": "八部獲益。",
    "X38n0695_008:0764a14_12": "四解悟義理。",
    "X38n0695_008:0764a14_13": "為人廣說。",
    "X38n0695_008:0764a15_14": "五書寫流通。",
    "X38n0695_008:0764a15_15": "普利一切。",
    "X38n0695_008:0764a15_16": "大士授諸眾生心地大戒。",
    "X38n0695_008:0764a16_17": "彼既得戒已。",
    "X38n0695_008:0764a16_18": "彼復書寫此戒卷。",
    "X38n0695_008:0764a16_19": "轉授一切眾生心地大戒。",
    "X38n0695_008:0764a17_20": "此諸眾生。",
    "X38n0695_008:0764a17_21": "既得戒已。",
    "X38n0695_008:0764a17_22": "復書此戒卷。",
    "X38n0695_008:0764a18_0": "轉化將來一切眾生。",
    "X38n0695_008:0764a18_1": "如是三世。",
    "X38n0695_008:0764a18_2": "化復轉化。",
    "X38n0695_008:0764a18_3": "展轉相因。",
    "X38n0695_008:0764a19_4": "如燈燈續燄。",
    "X38n0695_008:0764a19_5": "無盡無絕。",
    "X38n0695_008:0764a19_6": "正所謂荷負三世佛法。",
    "X38n0695_008:0764a20_0": "誘化一切。",
    "X38n0695_008:0764a20_1": "然無盡燈是也。",
    "X38n0695_008:0764a20_2": "如是三世一切眾生。",
    "X38n0695_008:0764a20_3": "依戒修行。",
    "X38n0695_008:0764a21_4": "故皆得見本源千佛。",
    "X38n0695_008:0764a21_5": "佛為授手。",
    "X38n0695_008:0764a21_6": "摩頂授記。",
    "X38n0695_008:0764a22_0": "從今以往。",
    "X38n0695_008:0764a22_1": "不墮三惡八難。",
    "X38n0695_008:0764a22_2": "以至成等正覺也。",
    "X38n0695_008:0764a22_3": "佛性常住戒卷者。",
    "X38n0695_008:0764a23_4": "此是舍那心地佛性常住不變不易之戒。",
    "X38n0695_008:0764a24_5": "故一受直至成佛。",
    "X38n0695_008:0764a24_6": "不同聲聞戒。",
    "X38n0695_008:0764a24_7": "止在一生也。",
    "X38n0695_008:0764b01_0": "世世。",
    "X38n0695_008:0764b01_1": "是離苦。",
    "X38n0695_008:0764b01_2": "常生。",
    "X38n0695_008:0764b01_3": "是得樂。",
    "X38n0695_008:0764b01_4": "以此戒能止身口意之非。",
    "X38n0695_008:0764b02_5": "故不墮惡道。",
    "X38n0695_008:0764b02_6": "出生萬善。",
    "X38n0695_008:0764b02_7": "故常生人天。",
    "X38n0695_008:0764b02_8": "原此佛性心地大戒。",
    "X38n0695_008:0764b03_9": "因該果海。",
    "X38n0695_008:0764b03_10": "果徹因源。",
    "X38n0695_008:0764b03_11": "即凡成聖。",
    "X38n0695_008:0764b03_12": "而豈止離三惡生人天耶。",
    "X38n0695_008:0764b04_13": "須知如來未出世時。",
    "X38n0695_008:0764b04_14": "天竺之人。",
    "X38n0695_008:0764b05_0": "多樂生天。",
    "X38n0695_008:0764b05_1": "佛且暫就初學凡情未契心源者。",
    "X38n0695_008:0764b05_2": "起其忻善報。",
    "X38n0695_008:0764b06_3": "厭惡道苦。",
    "X38n0695_008:0764b06_4": "而為說也。",
    "X38n0695_008:0764b06_5": "今佛初會說法。",
    "X38n0695_008:0764b06_6": "若直示之以極果。",
    "X38n0695_008:0764b07_7": "恐其心生疑惑。",
    "X38n0695_008:0764b07_8": "致有退失正戒大益。",
    "X38n0695_008:0764b08_0": "或由此戒力。",
    "X38n0695_008:0764b08_1": "不墮惡道。",
    "X38n0695_008:0764b08_2": "常生有佛世界人天中。",
    "X38n0695_008:0764b08_3": "見佛聞法。",
    "X38n0695_008:0764b09_4": "速階不退也。",
    "X38n0695_008:0764b10_0": "我今在此樹下。",
    "X38n0695_008:0764b10_1": "略開七佛法戒。",
    "X38n0695_008:0764b10_2": "汝等大眾。",
    "X38n0695_008:0764b10_3": "當一心學波羅提木叉。",
    "X38n0695_008:0764b11_4": "歡喜奉行。",
    "X38n0695_008:0764b11_5": "如無相天王品勸學中。",
    "X38n0695_008:0764b11_6": "一一廣明。",
    "X38n0695_008:0764b12_7": "三千學士。",
    "X38n0695_008:0764b12_8": "時坐聽者。",
    "X38n0695_008:0764b12_9": "聞佛自誦。",
    "X38n0695_008:0764b12_10": "心心頂戴。",
    "X38n0695_008:0764b12_11": "歡喜受持。",
    "X38n0695_008:0764b14_0": "略開者。",
    "X38n0695_008:0764b14_1": "謂七佛法戒。",
    "X38n0695_008:0764b14_2": "非止五十八。",
    "X38n0695_008:0764b14_3": "今所說者。",
    "X38n0695_008:0764b14_4": "是略示七佛法戒。",
    "X38n0695_008:0764b15_5": "如一毛頭許。",
    "X38n0695_008:0764b15_6": "俾就初機易學。",
    "X38n0695_008:0764b15_7": "則歡喜奉行。",
    "X38n0695_008:0764b16_8": "如欲廣知戒中事理。",
    "X38n0695_008:0764b16_9": "當如大本無相天王品中詳明也。",
    "X38n0695_008:0764b17_10": "三千學士者。",
    "X38n0695_008:0764b17_11": "未階妙覺。",
    "X38n0695_008:0764b17_12": "猶居學地。",
    "X38n0695_008:0764b17_13": "故名學士。",
    "X38n0695_008:0764b18_14": "時如來勸百萬億大眾。",
    "X38n0695_008:0764b18_15": "當一心學。",
    "X38n0695_008:0764b18_16": "而在會三千諸大菩薩。",
    "X38n0695_008:0764b19_17": "聞佛自誦。",
    "X38n0695_008:0764b19_18": "故尊重頂戴受持。",
    "X38n0695_008:0764b19_19": "此亦舉先學。",
    "X38n0695_008:0764b20_20": "以攝百萬億之初機也。",
    "X38n0695_008:0764b21_0": "爾時釋迦牟尼佛。",
    "X38n0695_008:0764b21_1": "說上蓮華臺藏世界。",
    "X38n0695_008:0764b21_2": "盧舍那佛所說心地法門品中。",
    "X38n0695_008:0764b22_3": "十無盡戒法品竟。",
    "X38n0695_008:0764b22_4": "千百億釋迦。",
    "X38n0695_008:0764b22_5": "亦如是說。",
    "X38n0695_008:0764b24_0": "初明一日月世界。",
    "X38n0695_008:0764b24_1": "一釋迦如來說舍那所說心地十無盡戒法竟。",
    "X38n0695_008:0764c01_2": "後明千百億日月世界中。",
    "X38n0695_008:0764c01_3": "千百億釋迦如來。",
    "X38n0695_008:0764c02_4": "悉同說舍那心地十無盡戒法。",
    "X38n0695_008:0764c02_5": "故云亦如是也。",
    "X38n0695_008:0764c03_6": "今單舉十重。",
    "X38n0695_008:0764c03_7": "不言四十八者。",
    "X38n0695_008:0764c03_8": "以此十戒。",
    "X38n0695_008:0764c03_9": "包攝無量諸戒。",
    "X38n0695_008:0764c04_10": "況四十八。",
    "X38n0695_008:0764c04_11": "故云無盡戒法也。",
    "X38n0695_008:0764c05_0": "從摩醯首羅天王宮。",
    "X38n0695_008:0764c05_1": "至此道樹下。",
    "X38n0695_008:0764c05_2": "十住處說法品。",
    "X38n0695_008:0764c05_3": "為一切菩薩。",
    "X38n0695_008:0764c06_4": "不可說大眾。",
    "X38n0695_008:0764c06_5": "受持讀誦。",
    "X38n0695_008:0764c06_6": "解說其義亦如是。",
    "X38n0695_008:0764c07_0": "前明一佛說舍那所說心地十無盡戒。",
    "X38n0695_008:0764c07_1": "千百億佛悉亦同說。",
    "X38n0695_008:0764c08_2": "今明於十住處。",
    "X38n0695_008:0764c08_3": "說諸法門。",
    "X38n0695_008:0764c08_4": "下文總結千百億釋迦。",
    "X38n0695_008:0764c09_5": "及一切諸佛。",
    "X38n0695_008:0764c09_6": "說諸法門。",
    "X38n0695_008:0764c09_7": "亦如是也。",
    "X38n0695_008:0764c10_0": "千百億世界。",
    "X38n0695_008:0764c10_1": "蓮華藏世界。",
    "X38n0695_008:0764c10_2": "微塵世界。",
    "X38n0695_008:0764c10_3": "一切佛心藏。",
    "X38n0695_008:0764c10_4": "地藏。",
    "X38n0695_008:0764c11_5": "戒藏。",
    "X38n0695_008:0764c11_6": "無量行願藏。",
    "X38n0695_008:0764c11_7": "因果佛性常住藏。",
    "X38n0695_008:0764c11_8": "如是一切佛說無量一切法藏竟。",
    "X38n0695_008:0764c12_9": "千百億世界中。",
    "X38n0695_008:0764c12_10": "一切眾生受持。",
    "X38n0695_008:0764c13_0": "歡喜奉行。",
    "X38n0695_008:0764c14_0": "世界之多。",
    "X38n0695_008:0764c14_1": "不可以數說。",
    "X38n0695_008:0764c14_2": "故舉微塵喻之。",
    "X38n0695_008:0764c14_3": "一塵喻一世界。",
    "X38n0695_008:0764c15_4": "故云微塵世界也。",
    "X38n0695_008:0764c15_5": "蓮華藏世界。",
    "X38n0695_008:0764c15_6": "具足無量微塵世界。",
    "X38n0695_008:0764c16_7": "如是千百億世界。",
    "X38n0695_008:0764c16_8": "微塵世界。",
    "X38n0695_008:0764c16_9": "總不出一蓮華藏世界。",
    "X38n0695_008:0764c17_10": "如是世界中。",
    "X38n0695_008:0764c17_11": "一切諸佛同具心等諸藏。",
    "X38n0695_008:0764c18_0": "故同說諸藏。",
    "X38n0695_008:0764c18_1": "藏者。",
    "X38n0695_008:0764c18_2": "包含之義也。",
    "X38n0695_008:0764c18_3": "一心藏者。",
    "X38n0695_008:0764c18_4": "惟一真如心體。",
    "X38n0695_008:0764c19_5": "圓包太虗。",
    "X38n0695_008:0764c19_6": "具足萬法。",
    "X38n0695_008:0764c19_7": "無量妙用。",
    "X38n0695_008:0764c19_8": "故如藏也。",
    "X38n0695_008:0764c20_0": "二地藏者。",
    "X38n0695_008:0764c20_1": "心體本無分別。",
    "X38n0695_008:0764c20_2": "平等如地。",
    "X38n0695_008:0764c20_3": "出生無盡諸善功德。",
    "X38n0695_008:0764c21_4": "故如藏也。",
    "X38n0695_008:0764c21_5": "三戒藏者。",
    "X38n0695_008:0764c21_6": "心體本空。",
    "X38n0695_008:0764c21_7": "而具足無盡戒法。",
    "X38n0695_008:0764c22_8": "容納無量福河。",
    "X38n0695_008:0764c22_9": "故云藏也。",
    "X38n0695_008:0764c22_10": "四行願藏者。",
    "X38n0695_008:0764c22_11": "心行善事曰行。",
    "X38n0695_008:0764c23_12": "心所尅期曰願。",
    "X38n0695_008:0764c23_13": "行海無邊。",
    "X38n0695_008:0764c23_14": "願門無盡。",
    "X38n0695_008:0764c24_0": "故云藏也。",
    "X38n0695_008:0764c24_1": "五因果佛性常住藏者。",
    "X38n0695_008:0764c24_2": "心之始修名因。",
    "X38n0695_008:0765a01_0": "終之所證名果。",
    "X38n0695_008:0765a01_1": "然因該果海。",
    "X38n0695_008:0765a01_2": "果徹因源。",
    "X38n0695_008:0765a01_3": "因果互融。",
    "X38n0695_008:0765a02_0": "而證法身。",
    "X38n0695_008:0765a02_1": "是名為佛。",
    "X38n0695_008:0765a02_2": "法身性本寂滅。",
    "X38n0695_008:0765a02_3": "湛然常住。",
    "X38n0695_008:0765a02_4": "而不變不遷。",
    "X38n0695_008:0765a03_5": "圓包法界。",
    "X38n0695_008:0765a03_6": "量等虗空。",
    "X38n0695_008:0765a03_7": "故云藏也。",
    "X38n0695_008:0765a03_8": "心藏。",
    "X38n0695_008:0765a03_9": "地藏。",
    "X38n0695_008:0765a04_10": "戒藏。",
    "X38n0695_008:0765a04_11": "正顯此非小乘波羅提木叉。",
    "X38n0695_008:0765a04_12": "乃菩薩本源心地正法戒也。",
    "X38n0695_008:0765a05_13": "如是一切佛者。",
    "X38n0695_008:0765a05_14": "即上千百萬億。",
    "X38n0695_008:0765a05_15": "蓮華藏。",
    "X38n0695_008:0765a06_16": "微塵世界諸佛也。",
    "X38n0695_008:0765a06_17": "如是無量諸佛。",
    "X38n0695_008:0765a06_18": "說無量一切法藏。",
    "X38n0695_008:0765a07_19": "如此五藏。",
    "X38n0695_008:0765a07_20": "該盡無餘。",
    "X38n0695_008:0765a07_21": "而戒藏為五藏之樞要。",
    "X38n0695_008:0765a08_22": "握樞要。",
    "X38n0695_008:0765a08_23": "而萬行備。",
    "X38n0695_008:0765a08_24": "聖果圓。",
    "X38n0695_008:0765a08_25": "是故三世一切諸佛同說。",
    "X38n0695_008:0765a09_26": "千百億世界一切眾生。",
    "X38n0695_008:0765a09_27": "各各尊敬受持。",
    "X38n0695_008:0765a09_28": "歡喜奉行。",
    "X38n0695_008:0765a11_0": "若廣開心地相相。",
    "X38n0695_008:0765a11_1": "如佛華光王。",
    "X38n0695_008:0765a11_2": "七行品中說。",
    "X38n0695_008:0765a12_0": "心地相相者。",
    "X38n0695_008:0765a12_1": "元心地無相。",
    "X38n0695_008:0765a12_2": "而戒有持犯。",
    "X38n0695_008:0765a12_3": "即心地之相。",
    "X38n0695_008:0765a13_4": "相有總別。",
    "X38n0695_008:0765a13_5": "十重是總。",
    "X38n0695_008:0765a13_6": "四十八是別。",
    "X38n0695_008:0765a13_7": "總有無量。",
    "X38n0695_008:0765a13_8": "別亦無窮。",
    "X38n0695_008:0765a14_9": "重重無盡。",
    "X38n0695_008:0765a14_10": "猶天帝網。",
    "X38n0695_008:0765a14_11": "如欲廣開發明心地事理之相。",
    "X38n0695_008:0765a15_12": "當如大本七行品中說。",
    "X38n0695_008:0765a15_13": "然此品。",
    "X38n0695_008:0765a15_14": "今此方無也。",
    "X38n0695_008:0765a17_0": "○二結頌迴向流通。",
    "X38n0695_008:0765a18_0": "此頌雖非佛說。",
    "X38n0695_008:0765a18_1": "而文義備悉。",
    "X38n0695_008:0765a18_2": "或西土賢聖所置。",
    "X38n0695_008:0765a18_3": "或此方哲人所安。",
    "X38n0695_008:0765a19_4": "乃讚歎持戒。",
    "X38n0695_008:0765a19_5": "勸學。",
    "X38n0695_008:0765a19_6": "度生。",
    "X38n0695_008:0765a19_7": "發願。",
    "X38n0695_008:0765a19_8": "迴向之文。",
    "X38n0695_008:0765a20_9": "如比丘戒本。",
    "X38n0695_008:0765a20_10": "初述讚頌。",
    "X38n0695_008:0765a20_11": "中列戒相。",
    "X38n0695_008:0765a20_12": "後結頌迴向。",
    "X38n0695_008:0765a21_13": "方合三啟之義。",
    "X38n0695_008:0765a21_14": "今闕初讚頌。",
    "X38n0695_008:0765a21_15": "以今經非全本。",
    "X38n0695_008:0765a21_16": "品兼上下故也(誦戒式中。",
    "X38n0695_008:0765a22_17": "略具讚頌)。",
    "X38n0695_008:0765a23_0": "明人忍慧強。",
    "X38n0695_008:0765a23_1": "能持如是法。",
    "X38n0695_008:0765a23_2": "未成佛道間。",
    "X38n0695_008:0765a23_3": "安獲五種利。",
    "X38n0695_008:0765a24_0": "強是勇銳堅固義。",
    "X38n0695_008:0765a24_1": "忍即生法忍也。",
    "X38n0695_008:0765a24_2": "慧是般若慧。",
    "X38n0695_008:0765a24_3": "由生法忍。",
    "X38n0695_008:0765b01_4": "而心不動。",
    "X38n0695_008:0765b01_5": "以般若慧。",
    "X38n0695_008:0765b01_6": "而斷惑證真。",
    "X38n0695_008:0765b01_7": "是知此心地大戒。",
    "X38n0695_008:0765b02_8": "故非愚小淺慧所可堪受。",
    "X38n0695_008:0765b02_9": "乃明達智者方能持也。",
    "X38n0695_008:0765b03_10": "未成佛道間者。",
    "X38n0695_008:0765b03_11": "能堅持此戒法。",
    "X38n0695_008:0765b03_12": "汝定成佛。",
    "X38n0695_008:0765b04_13": "今雖未成。",
    "X38n0695_008:0765b04_14": "而於其中間。",
    "X38n0695_008:0765b04_15": "世世先獲此五種福德利益也。",
    "X38n0695_008:0765b05_16": "安獲者。",
    "X38n0695_008:0765b05_17": "由戒德力故。",
    "X38n0695_008:0765b05_18": "安然而然自得。",
    "X38n0695_008:0765b05_19": "非虗望強求之也。",
    "X38n0695_008:0765b06_20": "下五種利。",
    "X38n0695_008:0765b06_21": "出地持經。",
    "X38n0695_008:0765b07_0": "一者十方佛。",
    "X38n0695_008:0765b07_1": "愍念常守護。",
    "X38n0695_008:0765b07_2": "二者命終時。",
    "X38n0695_008:0765b07_3": "正見心歡喜。",
    "X38n0695_008:0765b08_0": "三者生生處。",
    "X38n0695_008:0765b08_1": "為諸菩薩友。",
    "X38n0695_008:0765b08_2": "四者功德聚。",
    "X38n0695_008:0765b08_3": "戒度悉成就。",
    "X38n0695_008:0765b09_0": "五者今後世。",
    "X38n0695_008:0765b09_1": "性戒福慧滿。",
    "X38n0695_008:0765b09_2": "此是諸佛子。",
    "X38n0695_008:0765b10_0": "一由保重堅持諸佛心地之戒。",
    "X38n0695_008:0765b10_1": "故得諸佛慈悲愍念。",
    "X38n0695_008:0765b11_2": "常為守護。",
    "X38n0695_008:0765b11_3": "令其安修道業。",
    "X38n0695_008:0765b11_4": "成就自行。",
    "X38n0695_008:0765b11_5": "無致退失。",
    "X38n0695_008:0765b12_0": "及魔所得便。",
    "X38n0695_008:0765b12_1": "故般若經云。",
    "X38n0695_008:0765b12_2": "如來善護念諸菩薩是也。",
    "X38n0695_008:0765b13_3": "二由自具正見。",
    "X38n0695_008:0765b13_4": "了知善惡因果無爽。",
    "X38n0695_008:0765b13_5": "毀戒即墮惡道。",
    "X38n0695_008:0765b14_6": "故終時必心生怖畏。",
    "X38n0695_008:0765b14_7": "持戒則往生佛剎。",
    "X38n0695_008:0765b14_8": "故終時心自生歡喜。",
    "X38n0695_008:0765b15_9": "比丘戒本云。",
    "X38n0695_008:0765b15_10": "如人自照鏡。",
    "X38n0695_008:0765b15_11": "好醜生欣慼。",
    "X38n0695_008:0765b16_12": "是也。",
    "X38n0695_008:0765b16_13": "三謂此戒是三世菩薩敬重愛護。",
    "X38n0695_008:0765b16_14": "同學同持。",
    "X38n0695_008:0765b17_15": "豈不生生世世。",
    "X38n0695_008:0765b17_16": "在在處處。",
    "X38n0695_008:0765b17_17": "常為三賢十聖。",
    "X38n0695_008:0765b17_18": "諸大菩薩提携。",
    "X38n0695_008:0765b18_19": "與之為友耶。",
    "X38n0695_008:0765b18_20": "四謂六度萬行。",
    "X38n0695_008:0765b18_21": "無量眾善功德之聚。",
    "X38n0695_008:0765b19_22": "若能持戒品之一度。",
    "X38n0695_008:0765b19_23": "其餘諸度萬行功德等。",
    "X38n0695_008:0765b20_24": "悉皆成就也。",
    "X38n0695_008:0765b20_25": "五謂此戒是本源佛性之戒。",
    "X38n0695_008:0765b21_0": "性自賢善。",
    "X38n0695_008:0765b21_1": "身口業淨。",
    "X38n0695_008:0765b21_2": "任運止惡。",
    "X38n0695_008:0765b21_3": "任運生善。",
    "X38n0695_008:0765b21_4": "止惡是慧。",
    "X38n0695_008:0765b22_5": "生善是福。",
    "X38n0695_008:0765b22_6": "今生堅持。",
    "X38n0695_008:0765b22_7": "則晝夜福德智慧。",
    "X38n0695_008:0765b22_8": "任運增長。",
    "X38n0695_008:0765b23_9": "後世二嚴圓滿。",
    "X38n0695_008:0765b23_10": "成佛極果。",
    "X38n0695_008:0765b23_11": "號曰兩足尊。",
    "X38n0695_008:0765b23_12": "一切佛子從戒而生。",
    "X38n0695_008:0765b24_13": "今能持戒。",
    "X38n0695_008:0765b24_14": "福慧漸滿。",
    "X38n0695_008:0765b24_15": "即是諸佛真子。",
    "X38n0695_008:0765c01_0": "當來紹繼佛位也。",
    "X38n0695_008:0765c02_0": "智者善思量。",
    "X38n0695_008:0765c02_1": "計我著相者。",
    "X38n0695_008:0765c02_2": "不能生是法。",
    "X38n0695_008:0765c02_3": "滅壽取證者。",
    "X38n0695_008:0765c03_0": "亦非下種處。",
    "X38n0695_008:0765c03_1": "欲長菩提苗。",
    "X38n0695_008:0765c03_2": "光明照世間。",
    "X38n0695_008:0765c03_3": "應當靜觀察。",
    "X38n0695_008:0765c04_0": "諸法真實相。",
    "X38n0695_008:0765c04_1": "不生亦不滅。",
    "X38n0695_008:0765c04_2": "不常復不斷。",
    "X38n0695_008:0765c04_3": "不一亦不異。",
    "X38n0695_008:0765c05_0": "不來亦不去。",
    "X38n0695_008:0765c05_1": "如是一心中。",
    "X38n0695_008:0765c05_2": "方便勤莊嚴。",
    "X38n0695_008:0765c05_3": "菩薩所應作。",
    "X38n0695_008:0765c06_0": "應當次第學。",
    "X38n0695_008:0765c06_1": "於學於無學。",
    "X38n0695_008:0765c06_2": "勿生分別想。",
    "X38n0695_008:0765c06_3": "是名第一道。",
    "X38n0695_008:0765c07_0": "亦名摩訶衍。",
    "X38n0695_008:0765c07_1": "一切戲論惡。",
    "X38n0695_008:0765c07_2": "悉從是處滅。",
    "X38n0695_008:0765c07_3": "諸佛薩婆若。",
    "X38n0695_008:0765c08_0": "悉由是處出。",
    "X38n0695_008:0765c09_0": "決定了知故名為智。",
    "X38n0695_008:0765c09_1": "即是以般若觀慧。",
    "X38n0695_008:0765c09_2": "審思籌量。",
    "X38n0695_008:0765c10_0": "知外道凡夫。",
    "X38n0695_008:0765c10_1": "迷本真心。",
    "X38n0695_008:0765c10_2": "謬計神我。",
    "X38n0695_008:0765c10_3": "妄執四大為自身相。",
    "X38n0695_008:0765c11_4": "六塵緣影為自心相。",
    "X38n0695_008:0765c11_5": "故不能發生是心地戒法也。",
    "X38n0695_008:0765c12_6": "滅壽取證者。",
    "X38n0695_008:0765c12_7": "二乘灰身滅智。",
    "X38n0695_008:0765c12_8": "取證枯寂涅槃。",
    "X38n0695_008:0765c13_0": "故非下菩提種子處也。",
    "X38n0695_008:0765c13_1": "如欲增長菩提道芽。",
    "X38n0695_008:0765c13_2": "當來成等正覺。",
    "X38n0695_008:0765c14_3": "以智慧日。",
    "X38n0695_008:0765c14_4": "照曜世間。",
    "X38n0695_008:0765c14_5": "破諸眾生。",
    "X38n0695_008:0765c14_6": "煩惱闇宅。",
    "X38n0695_008:0765c15_7": "惟在今時。",
    "X38n0695_008:0765c15_8": "以般若觀慧。",
    "X38n0695_008:0765c15_9": "靜觀諸法真實相也。",
    "X38n0695_008:0765c15_10": "一切諸法。",
    "X38n0695_008:0765c16_11": "皆從緣生。",
    "X38n0695_008:0765c16_12": "緣生無性。",
    "X38n0695_008:0765c16_13": "當體即空。",
    "X38n0695_008:0765c16_14": "空即真空。",
    "X38n0695_008:0765c17_0": "真空無相。",
    "X38n0695_008:0765c17_1": "故云實相。",
    "X38n0695_008:0765c17_2": "即本源心體也。",
    "X38n0695_008:0765c17_3": "真空實相。",
    "X38n0695_008:0765c17_4": "不屬有為身心。",
    "X38n0695_008:0765c18_5": "故非生滅。",
    "X38n0695_008:0765c18_6": "不墮二邊。",
    "X38n0695_008:0765c18_7": "故非斷常。",
    "X38n0695_008:0765c18_8": "不墮數量。",
    "X38n0695_008:0765c19_9": "故非一異。",
    "X38n0695_008:0765c19_10": "本離動靜。",
    "X38n0695_008:0765c19_11": "故無來去。",
    "X38n0695_008:0765c19_12": "如是諸法。",
    "X38n0695_008:0765c19_13": "唯是一心。",
    "X38n0695_008:0765c20_14": "菩薩欲得莊嚴本源心地。",
    "X38n0695_008:0765c20_15": "還從自心起用。",
    "X38n0695_008:0765c21_0": "以方便智。",
    "X38n0695_008:0765c21_1": "照心境界。",
    "X38n0695_008:0765c21_2": "境界即是實相。",
    "X38n0695_008:0765c21_3": "故云靜觀察。",
    "X38n0695_008:0765c22_0": "所應作者。",
    "X38n0695_008:0765c22_1": "謂大士應於戒定慧。",
    "X38n0695_008:0765c22_2": "次第習學。",
    "X38n0695_008:0765c22_3": "菩薩修進六度萬行。",
    "X38n0695_008:0765c23_4": "無戒而不持。",
    "X38n0695_008:0765c23_5": "無善而不修。",
    "X38n0695_008:0765c23_6": "無生而不度。",
    "X38n0695_008:0765c24_7": "所謂萬事門中。",
    "X38n0695_008:0765c24_8": "一法不捨。",
    "X38n0695_008:0765c24_9": "故云學。",
    "X38n0695_008:0765c24_10": "觀察一念不生。",
    "X38n0695_008:0766a01_11": "前後際斷。",
    "X38n0695_008:0766a01_12": "萬法俱息。",
    "X38n0695_008:0766a01_13": "所謂金色門頭。",
    "X38n0695_008:0766a01_14": "一塵不立。",
    "X38n0695_008:0766a02_0": "故云無學。",
    "X38n0695_008:0766a02_1": "若起念分別。",
    "X38n0695_008:0766a02_2": "即是有為心識。",
    "X38n0695_008:0766a02_3": "非般若智。",
    "X38n0695_008:0766a03_0": "則不能趣人第一中道。",
    "X38n0695_008:0766a03_1": "摩訶衍。",
    "X38n0695_008:0766a03_2": "此云大乘。",
    "X38n0695_008:0766a03_3": "暫起分別。",
    "X38n0695_008:0766a04_4": "即凡夫有無。",
    "X38n0695_008:0766a04_5": "二乘偏見。",
    "X38n0695_008:0766a04_6": "非大乘中道。",
    "X38n0695_008:0766a04_7": "若趣入大乘中道。",
    "X38n0695_008:0766a05_8": "則若有若無。",
    "X38n0695_008:0766a05_9": "亦有亦無。",
    "X38n0695_008:0766a05_10": "非有非無之戲論惡見。",
    "X38n0695_008:0766a06_11": "從是而滅矣。",
    "X38n0695_008:0766a06_12": "薩婆若。",
    "X38n0695_008:0766a06_13": "此云一切智相。",
    "X38n0695_008:0766a06_14": "在因名般若。",
    "X38n0695_008:0766a07_15": "在果名薩婆若。",
    "X38n0695_008:0766a07_16": "即是諸佛一切種智。",
    "X38n0695_008:0766a07_17": "諸佛種智。",
    "X38n0695_008:0766a08_18": "皆由不起分別。",
    "X38n0695_008:0766a08_19": "滅諸戲論。",
    "X38n0695_008:0766a08_20": "直入中道。",
    "X38n0695_008:0766a08_21": "而出生也。",
    "X38n0695_008:0766a09_0": "是故諸佛子。",
    "X38n0695_008:0766a09_1": "宜發大勇猛。",
    "X38n0695_008:0766a09_2": "於諸佛淨戒。",
    "X38n0695_008:0766a09_3": "護持如明珠。",
    "X38n0695_008:0766a10_0": "過去諸菩薩。",
    "X38n0695_008:0766a10_1": "已於是中學。",
    "X38n0695_008:0766a10_2": "未來者當學。",
    "X38n0695_008:0766a10_3": "現在者今學。",
    "X38n0695_008:0766a11_0": "此是佛行處。",
    "X38n0695_008:0766a11_1": "聖主所稱歎。",
    "X38n0695_008:0766a12_0": "是故者。",
    "X38n0695_008:0766a12_1": "承上起下之詞。",
    "X38n0695_008:0766a12_2": "欲得諸佛薩婆若。",
    "X38n0695_008:0766a12_3": "宜應發起精進勇猛。",
    "X38n0695_008:0766a13_4": "堅持諸佛心地淨戒。",
    "X38n0695_008:0766a13_5": "如護明珠也。",
    "X38n0695_008:0766a13_6": "然珠體本自潔淨圓明。",
    "X38n0695_008:0766a14_7": "大士持戒不染故淨。",
    "X38n0695_008:0766a14_8": "無虧故圓。",
    "X38n0695_008:0766a15_9": "癡暗破故明。",
    "X38n0695_008:0766a15_10": "是為善護持也。",
    "X38n0695_008:0766a15_11": "此戒是三世菩薩。",
    "X38n0695_008:0766a16_0": "所同習學。",
    "X38n0695_008:0766a16_1": "而證菩提。",
    "X38n0695_008:0766a16_2": "十方諸佛。",
    "X38n0695_008:0766a16_3": "所共行履。",
    "X38n0695_008:0766a16_4": "而趣涅槃也。",
    "X38n0695_008:0766a17_5": "佛是聖中之聖。",
    "X38n0695_008:0766a17_6": "故稱聖主。",
    "X38n0695_008:0766a17_7": "佛子如是勇猛。",
    "X38n0695_008:0766a17_8": "護持淨戒。",
    "X38n0695_008:0766a18_9": "故為諸佛之所共讚歎也。",
    "X38n0695_008:0766a19_0": "我已隨順說。",
    "X38n0695_008:0766a19_1": "福德無量聚。",
    "X38n0695_008:0766a19_2": "迴以施眾生。",
    "X38n0695_008:0766a19_3": "共向一切智。",
    "X38n0695_008:0766a20_0": "願聞是法者。",
    "X38n0695_008:0766a20_1": "悉得成佛道。",
    "X38n0695_008:0766a21_0": "我者。",
    "X38n0695_008:0766a21_1": "作頌人自稱。",
    "X38n0695_008:0766a21_2": "今亦可以為誦戒者稱也。",
    "X38n0695_008:0766a21_3": "隨者不乖經文。",
    "X38n0695_008:0766a22_4": "順者不違戒旨。",
    "X38n0695_008:0766a22_5": "謂我今說此心地大戒。",
    "X38n0695_008:0766a23_0": "即有無量福德積聚。",
    "X38n0695_008:0766a23_1": "心無悋惜。",
    "X38n0695_008:0766a23_2": "盡以迴施一切眾生。",
    "X38n0695_008:0766a24_3": "悉同趣向如來一切智智。",
    "X38n0695_008:0766a24_4": "不向人天二乘小果。",
    "X38n0695_008:0766b01_0": "復願有聞如是戒法者。",
    "X38n0695_008:0766b01_1": "盡成無上佛道。",
    "X38n0695_008:0766b01_2": "葢由此戒一言一字。",
    "X38n0695_008:0766b02_3": "皆從舍那心地流出。",
    "X38n0695_008:0766b02_4": "是諸佛之本源。",
    "X38n0695_008:0766b02_5": "菩提之根本。",
    "X38n0695_008:0766b03_6": "故一聞之。",
    "X38n0695_008:0766b03_7": "則永為佛種。",
    "X38n0695_008:0766b03_8": "豈不成等正覺。",
    "X38n0695_008:0766b04_0": "但由根有利鈍。",
    "X38n0695_008:0766b04_1": "修分勤墮。",
    "X38n0695_008:0766b04_2": "故成有遲速。",
    "X38n0695_008:0766b04_3": "若得一念相應。",
    "X38n0695_008:0766b05_4": "前後際斷。",
    "X38n0695_008:0766b05_5": "生佛無二。",
    "X38n0695_008:0766b05_6": "古今冥一。",
    "X38n0695_008:0766b05_7": "又何遲速之有哉。",
    "X38n0695_008:0766b08_0": "佛說梵網經菩薩心地品下略疏卷八(終)"
}