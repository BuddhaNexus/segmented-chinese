[
    {
        "source_sentence": "佛說聖大總持王經",
        "from": "T21n1371_001:0888b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T21n1371_001:0888b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1371_001:0888b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1371_001:0888b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊。",
        "from": "T21n1371_001:0888b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在舍衛國祇樹給孤獨園。",
        "from": "T21n1371_001:0888b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時阿難安居異處守夏既滿。",
        "from": "T21n1371_001:0888b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從彼默然來詣佛會。",
        "from": "T21n1371_001:0888b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至佛會已五體投地。",
        "from": "T21n1371_001:0888b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮佛雙足退坐一面顒俟佛誨。",
        "from": "T21n1371_001:0888b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告阿難言。",
        "from": "T21n1371_001:0888b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難我今為欲利益一切有情故。",
        "from": "T21n1371_001:0888b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說大陀羅尼章句。",
        "from": "T21n1371_001:0888b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當諦聽。",
        "from": "T21n1371_001:0888b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時阿難受佛教勅。",
        "from": "T21n1371_001:0888b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心凝然合掌而住。",
        "from": "T21n1371_001:0888b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言阿難。",
        "from": "T21n1371_001:0888b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有摩訶陀羅尼大總持王。",
        "from": "T21n1371_001:0888b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是過去七十七俱胝如來之所宣說。",
        "from": "T21n1371_001:0888b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦隨喜。",
        "from": "T21n1371_001:0888b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難此大陀羅尼章句。",
        "from": "T21n1371_001:0888b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令有情得大安樂。",
        "from": "T21n1371_001:0888b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威德勢力悉皆具足。",
        "from": "T21n1371_001:0888b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1371_001:0888b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得值遇者作是思惟。",
        "from": "T21n1371_001:0888b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大陀羅尼希有難遇。",
        "from": "T21n1371_001:0888b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬若如來應正等覺。",
        "from": "T21n1371_001:0888b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出現於世難得值遇。",
        "from": "T21n1371_001:0888b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如優曇鉢花希有難見。",
        "from": "T21n1371_001:0888b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當作是念諦信供養。",
        "from": "T21n1371_001:0888b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復謂阿難言。",
        "from": "T21n1371_001:0888b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1371_001:0888b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此大陀羅尼章句。",
        "from": "T21n1371_001:0888b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心受持讀誦供養者。",
        "from": "T21n1371_001:0888b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刃不能傷毒不能中。",
        "from": "T21n1371_001:0888b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火不能燒水不能漂。",
        "from": "T21n1371_001:0888b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王法不加永無夭歿。",
        "from": "T21n1371_001:0888b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於天人阿修羅摩嚕多迦樓羅乾闥婆緊曩羅摩睺羅伽。",
        "from": "T21n1371_001:0888b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜叉羅剎畢哩多毘舍遮鳩槃茶布單曩阿波三摩嚕。",
        "from": "T21n1371_001:0888b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸如是等造作惡法行。",
        "from": "T21n1371_001:0888b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不饒益者亦不能侵害。",
        "from": "T21n1371_001:0888b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至幻術邪明諸惡法等亦不能嬈亂。",
        "from": "T21n1371_001:0888b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復瘧病一日二日三日四日。",
        "from": "T21n1371_001:0888b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復多日或復須臾。",
        "from": "T21n1371_001:0888c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復風癀或復痰癊。",
        "from": "T21n1371_001:0888c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至頭痛如是等病亦不能為害。",
        "from": "T21n1371_001:0888c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說陀羅尼曰。",
        "from": "T21n1371_001:0888c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合他引一入嚩二合隷摩訶入嚩二合隷二入嚩二合羅儞摩訶入嚩二合羅儞三怛波儞摩訶怛波儞四入嚩二合隷帝五郁枳目枳六三半儞摩訶三半儞娑嚩二合引賀引七阿難我先語汝。",
        "from": "T21n1371_001:0888c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大陀羅尼章句。",
        "from": "T21n1371_001:0888c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是七十七俱胝諸佛如來之所宣說我今復說。",
        "from": "T21n1371_001:0888c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難若有善男子善女人。",
        "from": "T21n1371_001:0888c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此大陀羅尼章句。",
        "from": "T21n1371_001:0888c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心受持若讀若誦。",
        "from": "T21n1371_001:0888c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以思惟種種供養。",
        "from": "T21n1371_001:0888c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得宿命通知七生事。",
        "from": "T21n1371_001:0888c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩提心永不退轉。",
        "from": "T21n1371_001:0888c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復說陀羅尼曰。",
        "from": "T21n1371_001:0888c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛　儞也二合他引一按抳摩抳二乞叉二合彌乞叉二合摩曳三摩曩禰引四阿曩努五護隷引摩賀引護隷引六怛曩計引七儼鼻哩引八努鉢囉二合娑呬娑呬娑嚩二合訶引九阿難此大陀羅尼章句。",
        "from": "T21n1371_001:0888c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是過去八十八俱胝諸佛如來之所宣說。",
        "from": "T21n1371_001:0888c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦隨喜今復宣說。",
        "from": "T21n1371_001:0888c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難若有善男子善女人。",
        "from": "T21n1371_001:0888c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此大陀羅尼章句。",
        "from": "T21n1371_001:0888c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心受持或讀或誦思惟供養。",
        "from": "T21n1371_001:0888c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人得宿命通知十四生事。",
        "from": "T21n1371_001:0888c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩提心永不退轉。",
        "from": "T21n1371_001:0888c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊又說陀羅尼曰。",
        "from": "T21n1371_001:0888c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛　儞也二合他引一桉致引挽致引二姹計引姹囉計引三姹計引姹囉計引四阿悉迦引悉麼引迦引悉五伊隷彌隷六底隷彌隷七撓引囉吠摩賀引撓引囉吠引八部旦誐彌引九部多波囉野拏轉聲呼底彌孕二合誐隷引十摩賀引底彌孕二合誐隷引十一三婆吠引摩賀引三婆吠引娑嚩二合訶引十二阿難此大陀羅尼章句。",
        "from": "T21n1371_001:0889a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具大威德力勢無量。",
        "from": "T21n1371_001:0889a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1371_001:0889a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心受持或讀或誦思惟供養者得宿命通知二十一生之事。",
        "from": "T21n1371_001:0889a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩提心永不退轉。",
        "from": "T21n1371_001:0889a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊又說陀羅尼曰。",
        "from": "T21n1371_001:0889a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛　儞也二合他引一阿計隷引嚩計隷引二嚕隷引摩賀引嚕隷引三烏賀儞謨引賀儞謨引賀儞四昝婆儞娑旦二合婆儞娑嚩二合訶引五阿難此大陀羅尼。",
        "from": "T21n1371_001:0889a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具大威德有大力勢。",
        "from": "T21n1371_001:0889a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德無量倍勝於前。",
        "from": "T21n1371_001:0889a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與有情作大利益。",
        "from": "T21n1371_001:0889a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1371_001:0889a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發誠信心不生疑惑。",
        "from": "T21n1371_001:0889a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此大陀羅尼受持讀誦。",
        "from": "T21n1371_001:0889a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為他人而作擁護。",
        "from": "T21n1371_001:0889a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為救濟或為息災者。",
        "from": "T21n1371_001:0889a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當使彼人刀杖不傷毒不能中。",
        "from": "T21n1371_001:0889a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡事無能損害。",
        "from": "T21n1371_001:0889a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人為自擁護。",
        "from": "T21n1371_001:0889a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此陀羅尼書於素帛帶持身臂。",
        "from": "T21n1371_001:0889a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲功德無量無邊。",
        "from": "T21n1371_001:0889a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復智者持此陀羅尼。",
        "from": "T21n1371_001:0889a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於枯樹下為作救濟。",
        "from": "T21n1371_001:0889a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼枯樹尋復穌活。",
        "from": "T21n1371_001:0889a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根葉重生作珊瑚色。",
        "from": "T21n1371_001:0889a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華實茂盛人所愛樂。",
        "from": "T21n1371_001:0889a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難若有智者。",
        "from": "T21n1371_001:0889a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒常受持悔於先身所作罪業。",
        "from": "T21n1371_001:0889a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復志心懺悔無不消滅。",
        "from": "T21n1371_001:0889a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故阿難。",
        "from": "T21n1371_001:0889a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如日月威光廣大能照世間。",
        "from": "T21n1371_001:0889a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼威德力故。",
        "from": "T21n1371_001:0889a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由能墮落。",
        "from": "T21n1371_001:0889a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如四大海水。",
        "from": "T21n1371_001:0889a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾流所聚深廣無比。",
        "from": "T21n1371_001:0889a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼威德力故亦能乾竭。",
        "from": "T21n1371_001:0889a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於大地無量無邊。",
        "from": "T21n1371_001:0889a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼威德力故可分千段。",
        "from": "T21n1371_001:0889a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何有罪業而不滅耶。",
        "from": "T21n1371_001:0889a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難如是等大陀羅尼章句所在之處。",
        "from": "T21n1371_001:0889a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須尊重恭信供養。",
        "from": "T21n1371_001:0889a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得輕慢勿復違逆。",
        "from": "T21n1371_001:0889a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有天龍夜叉羅剎畢哩多毘舍遮鳩槃茶布單那羯吒布單那阿波三摩囉吠多拏人及非人。",
        "from": "T21n1371_001:0889b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸如是等造作惡法。",
        "from": "T21n1371_001:0889b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸世間行不饒益者。",
        "from": "T21n1371_001:0889b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於此大陀羅尼章句。",
        "from": "T21n1371_001:0889b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有所違逆而不隨順者。",
        "from": "T21n1371_001:0889b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼持國天王現極怒相。",
        "from": "T21n1371_001:0889b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光焰不散都為一聚。",
        "from": "T21n1371_001:0889b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以熱鐵輪破彼頭頂。",
        "from": "T21n1371_001:0889b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分作七分如阿梨樹枝。",
        "from": "T21n1371_001:0889b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼帝釋天主亦大忿怒。",
        "from": "T21n1371_001:0889b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光焰熾盛都為一聚。",
        "from": "T21n1371_001:0889b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛杵而破彼頂。",
        "from": "T21n1371_001:0889b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分作七分如阿梨樹枝。",
        "from": "T21n1371_001:0889b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又金剛手大藥叉主。",
        "from": "T21n1371_001:0889b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以金剛杵擊破彼頂。",
        "from": "T21n1371_001:0889b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如阿梨樹枝。",
        "from": "T21n1371_001:0889b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復彼等若有違逆此大陀羅尼章句者。",
        "from": "T21n1371_001:0889b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖住天中永不能得水精王宮功德水用。",
        "from": "T21n1371_001:0889b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經已。",
        "from": "T21n1371_001:0889b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿難及是會大眾。",
        "from": "T21n1371_001:0889b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天人阿修羅乾闥婆人非人等。",
        "from": "T21n1371_001:0889b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說歡喜奉行禮佛而退。",
        "from": "T21n1371_001:0889b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說聖大總持王經",
        "from": "T21n1371_001:0889b15_100",
        "context_with_next_sentence": false
    }
]