{
    "X72n1435_032:0365b16_0": "無異禪師廣錄卷第三十二",
    "X72n1435_032:0365b18_0": "住博山法孫　弘瀚　彚編",
    "X72n1435_032:0365b19_0": "首座法孫　弘裕　同集",
    "X72n1435_032:0365b20_0": "　　序(二)",
    "X72n1435_032:0365b21_0": "重刻圓覺經序",
    "X72n1435_032:0365b22_0": "夫緣生無性。",
    "X72n1435_032:0365b22_1": "生佛之迹本虗。",
    "X72n1435_032:0365b22_2": "無性緣生。",
    "X72n1435_032:0365b22_3": "聖凡之形宛爾。",
    "X72n1435_032:0365b23_4": "隨業感而報分優劣。",
    "X72n1435_032:0365b23_5": "逐境浪而識變精粗。",
    "X72n1435_032:0365b23_6": "如來大光明藏。",
    "X72n1435_032:0365b24_7": "是眾生淨覺之本源。",
    "X72n1435_032:0365b24_8": "眾生最清淨心。",
    "X72n1435_032:0365b24_9": "是諸佛本起之因地。",
    "X72n1435_032:0365c01_10": "當知無明無體。",
    "X72n1435_032:0365c01_11": "皆是空花。",
    "X72n1435_032:0365c01_12": "實際非塵。",
    "X72n1435_032:0365c01_13": "妄念輪轉。",
    "X72n1435_032:0365c02_14": "究竟圓滿。",
    "X72n1435_032:0365c02_15": "體常寂以遍十方。",
    "X72n1435_032:0365c02_16": "平等道成。",
    "X72n1435_032:0365c02_17": "心恒通而含剎土。",
    "X72n1435_032:0365c03_18": "不妨以幻修幻。",
    "X72n1435_032:0365c03_19": "肯信居塵出塵。",
    "X72n1435_032:0365c03_20": "開總持之門。",
    "X72n1435_032:0365c04_21": "絕去來之相。",
    "X72n1435_032:0365c04_22": "登涅槃之岸。",
    "X72n1435_032:0365c04_23": "忘得失之心。",
    "X72n1435_032:0365c04_24": "虗空何更生花。",
    "X72n1435_032:0365c05_25": "真金不重為鑛。",
    "X72n1435_032:0365c05_26": "貪欲斷而生死斷。",
    "X72n1435_032:0365c05_27": "愛渴除而理障除。",
    "X72n1435_032:0365c06_28": "非植二乘。",
    "X72n1435_032:0365c06_29": "頓超五性。",
    "X72n1435_032:0365c06_30": "無取無證。",
    "X72n1435_032:0365c06_31": "眼不自是眼。",
    "X72n1435_032:0365c07_0": "非智非愚。",
    "X72n1435_032:0365c07_1": "心不自生心。",
    "X72n1435_032:0365c07_2": "植眾德本。",
    "X72n1435_032:0365c07_3": "成就道源。",
    "X72n1435_032:0365c07_4": "悟圓覺以淨覺心。",
    "X72n1435_032:0365c08_5": "取靜行而澄行證。",
    "X72n1435_032:0365c08_6": "客塵永滅。",
    "X72n1435_032:0365c08_7": "妙體方週。",
    "X72n1435_032:0365c08_8": "聞在剎那。",
    "X72n1435_032:0365c09_9": "悟通曠劫。",
    "X72n1435_032:0365c09_10": "二十五種輪觀。",
    "X72n1435_032:0365c09_11": "隨順繇人。",
    "X72n1435_032:0365c09_12": "百千萬種法門。",
    "X72n1435_032:0365c10_13": "樞機在我。",
    "X72n1435_032:0365c10_14": "執四相而生顛倒。",
    "X72n1435_032:0365c10_15": "二妄相依。",
    "X72n1435_032:0365c10_16": "了六情以契圓明。",
    "X72n1435_032:0365c11_17": "一心匪礙。",
    "X72n1435_032:0365c11_18": "作止任滅。",
    "X72n1435_032:0365c11_19": "仗知識以銷融。",
    "X72n1435_032:0365c11_20": "憍慢愛憎。",
    "X72n1435_032:0365c12_21": "觀眾生而同體。",
    "X72n1435_032:0365c12_22": "期限成純淨之樂。",
    "X72n1435_032:0365c12_23": "懺悔斷結習之根。",
    "X72n1435_032:0365c13_24": "悉備上機。",
    "X72n1435_032:0365c13_25": "頓圓種智。",
    "X72n1435_032:0365c13_26": "是為十二分經清淨眼目。",
    "X72n1435_032:0365c14_27": "三千七百祖師密傳之要領也。",
    "X72n1435_032:0365c14_28": "茲因顧居士發心重刊。",
    "X72n1435_032:0365c15_29": "使一切眾生。",
    "X72n1435_032:0365c15_30": "入文殊智海普賢行門。",
    "X72n1435_032:0365c15_31": "履圓覺妙場。",
    "X72n1435_032:0365c16_32": "坐華嚴法界。",
    "X72n1435_032:0365c16_33": "激予序引。",
    "X72n1435_032:0365c16_34": "予不敢以宗乘中較其優劣。",
    "X72n1435_032:0365c17_35": "大抵就斯經。",
    "X72n1435_032:0365c17_36": "旁通箇消息耳。",
    "X72n1435_032:0365c18_0": "重刻蓮宗寶鑑序",
    "X72n1435_032:0365c19_0": "優曇大師。",
    "X72n1435_032:0365c19_1": "徹證禪宗。",
    "X72n1435_032:0365c19_2": "專心淨土。",
    "X72n1435_032:0365c19_3": "自利早圓。",
    "X72n1435_032:0365c19_4": "悲臻未悟。",
    "X72n1435_032:0365c20_0": "將念佛一門。",
    "X72n1435_032:0365c20_1": "集成十卷。",
    "X72n1435_032:0365c20_2": "顯諸佛轉未轉之機輪。",
    "X72n1435_032:0365c20_3": "闢眾生信不信之障礙。",
    "X72n1435_032:0365c21_4": "其引據確。",
    "X72n1435_032:0365c21_5": "其總攝周。",
    "X72n1435_032:0365c21_6": "其設教融。",
    "X72n1435_032:0365c21_7": "其指歸捷。",
    "X72n1435_032:0365c22_8": "可謂大有功于後學者也。",
    "X72n1435_032:0365c22_9": "慨末法我相自高。",
    "X72n1435_032:0365c23_0": "邊見分執。",
    "X72n1435_032:0365c23_1": "貶淨土為小乘。",
    "X72n1435_032:0365c23_2": "指念佛為權行。",
    "X72n1435_032:0365c23_3": "甚者向人涎唾下。",
    "X72n1435_032:0365c24_4": "覔尖新語句。",
    "X72n1435_032:0365c24_5": "蘊在八識田中。",
    "X72n1435_032:0365c24_6": "以為究竟極則。",
    "X72n1435_032:0366a01_0": "及乎到頭。",
    "X72n1435_032:0366a01_1": "一毫無用。",
    "X72n1435_032:0366a01_2": "是之謂棄楚璧而寶燕石。",
    "X72n1435_032:0366a01_3": "反鑑而索照也。",
    "X72n1435_032:0366a02_4": "其亦不辯甚矣。",
    "X72n1435_032:0366a02_5": "夫我釋迦文佛。",
    "X72n1435_032:0366a02_6": "不妄語者。",
    "X72n1435_032:0366a03_0": "不異語者。",
    "X72n1435_032:0366a03_1": "彌陀經云。",
    "X72n1435_032:0366a03_2": "一心不亂。",
    "X72n1435_032:0366a03_3": "專持名號乃至七日。",
    "X72n1435_032:0366a04_0": "即得往生。",
    "X72n1435_032:0366a04_1": "法華經云。",
    "X72n1435_032:0366a04_2": "若人散亂心。",
    "X72n1435_032:0366a04_3": "入於墖廟中。",
    "X72n1435_032:0366a04_4": "一稱南無佛。",
    "X72n1435_032:0366a05_5": "皆共成佛道。",
    "X72n1435_032:0366a05_6": "此其披心瀝膽。",
    "X72n1435_032:0366a05_7": "徹底為人。",
    "X72n1435_032:0366a05_8": "此言不信。",
    "X72n1435_032:0366a06_9": "誰為可信。",
    "X72n1435_032:0366a06_10": "此言可信。",
    "X72n1435_032:0366a06_11": "又何疑于淨土念佛之門乎。",
    "X72n1435_032:0366a07_12": "要而言之。",
    "X72n1435_032:0366a07_13": "七日不亂。",
    "X72n1435_032:0366a07_14": "為何等心。",
    "X72n1435_032:0366a07_15": "入墖廟稱南無佛之時。",
    "X72n1435_032:0366a08_16": "又何等心。",
    "X72n1435_032:0366a08_17": "能者得之。",
    "X72n1435_032:0366a08_18": "禪道如是而已。",
    "X72n1435_032:0366a08_19": "若是真師子兒。",
    "X72n1435_032:0366a09_20": "哮吼一聲。",
    "X72n1435_032:0366a09_21": "百獸腦裂。",
    "X72n1435_032:0366a09_22": "說淨土亦得。",
    "X72n1435_032:0366a09_23": "說禪亦得。",
    "X72n1435_032:0366a09_24": "說淨土即禪。",
    "X72n1435_032:0366a10_25": "禪即淨土亦得。",
    "X72n1435_032:0366a10_26": "雙是亦得。",
    "X72n1435_032:0366a10_27": "雙非亦得。",
    "X72n1435_032:0366a10_28": "終日念未甞念。",
    "X72n1435_032:0366a11_29": "終日生未甞生。",
    "X72n1435_032:0366a11_30": "終日無念不妨說念。",
    "X72n1435_032:0366a11_31": "終日無生不妨說生。",
    "X72n1435_032:0366a12_32": "圓陀如摩尼珠。",
    "X72n1435_032:0366a12_33": "求其住足處。",
    "X72n1435_032:0366a12_34": "了不可得。",
    "X72n1435_032:0366a13_35": "何禪何淨土。",
    "X72n1435_032:0366a13_36": "而乃二之。",
    "X72n1435_032:0366a13_37": "然雖如是。",
    "X72n1435_032:0366a13_38": "更有一句彌陀。",
    "X72n1435_032:0366a14_0": "未曾道著。",
    "X72n1435_032:0366a14_1": "欲盡情吐露。",
    "X72n1435_032:0366a14_2": "柰舌根短也。",
    "X72n1435_032:0366a14_3": "噫。",
    "X72n1435_032:0366a14_4": "掣電之機。",
    "X72n1435_032:0366a14_5": "留待哲者。",
    "X72n1435_032:0366a16_0": "建州弘釋錄序",
    "X72n1435_032:0366a17_0": "余作驅烏旹。",
    "X72n1435_032:0366a17_1": "甞遊閩中。",
    "X72n1435_032:0366a17_2": "知建州為理學淵藪。",
    "X72n1435_032:0366a17_3": "後閱傳燈諸書。",
    "X72n1435_032:0366a18_4": "又知建州為禪學淵藪。",
    "X72n1435_032:0366a18_5": "每見建州僧。",
    "X72n1435_032:0366a18_6": "必詢其鄉之先正。",
    "X72n1435_032:0366a19_7": "然往往不能對。",
    "X72n1435_032:0366a19_8": "因為悒悒久之。",
    "X72n1435_032:0366a19_9": "丁巳春。",
    "X72n1435_032:0366a19_10": "吾弟永覺師。",
    "X72n1435_032:0366a20_11": "初棄儒入釋。",
    "X72n1435_032:0366a20_12": "從壽昌先師。",
    "X72n1435_032:0366a20_13": "學枯禪。",
    "X72n1435_032:0366a20_14": "因與道其鄉之先正。",
    "X72n1435_032:0366a21_15": "甚悉皆。",
    "X72n1435_032:0366a21_16": "粹若珙璧。",
    "X72n1435_032:0366a21_17": "逸若鳳鸞。",
    "X72n1435_032:0366a21_18": "多余所未及知者。",
    "X72n1435_032:0366a22_19": "余喜甚。",
    "X72n1435_032:0366a22_20": "指其胸曰。",
    "X72n1435_032:0366a22_21": "此是一部僧史記。",
    "X72n1435_032:0366a22_22": "師曰。",
    "X72n1435_032:0366a22_23": "吾將志而傳之。",
    "X72n1435_032:0366a23_24": "無何先師沒。",
    "X72n1435_032:0366a23_25": "師來博山。",
    "X72n1435_032:0366a23_26": "同居者五載。",
    "X72n1435_032:0366a23_27": "余間索其舊諾。",
    "X72n1435_032:0366a24_28": "師曰。",
    "X72n1435_032:0366a24_29": "俟識鼻孔後為之。",
    "X72n1435_032:0366a24_30": "後歸閩隱山。",
    "X72n1435_032:0366a24_31": "未通消息。",
    "X72n1435_032:0366b01_32": "戊辰春。",
    "X72n1435_032:0366b01_33": "余自鼓山還博山。",
    "X72n1435_032:0366b01_34": "道經建州。",
    "X72n1435_032:0366b01_35": "師迎於開元寺。",
    "X72n1435_032:0366b02_36": "余一見而識之曰。",
    "X72n1435_032:0366b02_37": "今可志建州僧也。",
    "X72n1435_032:0366b02_38": "師笑而不答。",
    "X72n1435_032:0366b03_39": "余乃問曰。",
    "X72n1435_032:0366b03_40": "壽昌墖掃也未。",
    "X72n1435_032:0366b03_41": "師曰。",
    "X72n1435_032:0366b03_42": "掃即不廢。",
    "X72n1435_032:0366b03_43": "祇是不許人知。",
    "X72n1435_032:0366b04_44": "余曰。",
    "X72n1435_032:0366b04_45": "汝偷掃去也。",
    "X72n1435_032:0366b04_46": "師曰。",
    "X72n1435_032:0366b04_47": "和尚又作麼生。",
    "X72n1435_032:0366b04_48": "余曰。",
    "X72n1435_032:0366b05_49": "掃即不廢。",
    "X72n1435_032:0366b05_50": "祇是不曾動著。",
    "X72n1435_032:0366b05_51": "師曰。",
    "X72n1435_032:0366b05_52": "和尚似不曾掃。",
    "X72n1435_032:0366b05_53": "遂相笑而別。",
    "X72n1435_032:0366b06_54": "至己巳冬。",
    "X72n1435_032:0366b06_55": "以書來博山。",
    "X72n1435_032:0366b06_56": "則建州僧志成。",
    "X72n1435_032:0366b06_57": "寄以相示。",
    "X72n1435_032:0366b07_58": "且徵序焉。",
    "X72n1435_032:0366b07_59": "余閱其所集。",
    "X72n1435_032:0366b07_60": "凡分之為四科。",
    "X72n1435_032:0366b07_61": "首曰達本。",
    "X72n1435_032:0366b08_62": "重明宗也。",
    "X72n1435_032:0366b08_63": "次曰顯化。",
    "X72n1435_032:0366b08_64": "彰[示*曷]應也。",
    "X72n1435_032:0366b08_65": "三曰崇德。",
    "X72n1435_032:0366b08_66": "錄眾行也。",
    "X72n1435_032:0366b09_67": "四曰輔教。",
    "X72n1435_032:0366b09_68": "備金湯也。",
    "X72n1435_032:0366b09_69": "合之命名曰弘釋。",
    "X72n1435_032:0366b09_70": "崇法化也。",
    "X72n1435_032:0366b10_71": "其識正。",
    "X72n1435_032:0366b10_72": "其論確。",
    "X72n1435_032:0366b10_73": "其採訪博。",
    "X72n1435_032:0366b10_74": "其分界嚴。",
    "X72n1435_032:0366b10_75": "非良史也耶。",
    "X72n1435_032:0366b11_0": "昔者道宣。",
    "X72n1435_032:0366b11_1": "作僧史於唐。",
    "X72n1435_032:0366b11_2": "弗長於文。",
    "X72n1435_032:0366b11_3": "且不知有別傳之事。",
    "X72n1435_032:0366b12_4": "齊達磨一宗。",
    "X72n1435_032:0366b12_5": "於枯寂之輩。",
    "X72n1435_032:0366b12_6": "識何闇也。",
    "X72n1435_032:0366b12_7": "贊寧作僧史於宋。",
    "X72n1435_032:0366b13_8": "學富而才疎。",
    "X72n1435_032:0366b13_9": "且列黃蘗於感通。",
    "X72n1435_032:0366b13_10": "列嵓頭於遺身。",
    "X72n1435_032:0366b14_0": "列永明於興福。",
    "X72n1435_032:0366b14_1": "至於雲門。",
    "X72n1435_032:0366b14_2": "僧中傑也。",
    "X72n1435_032:0366b14_3": "反舍之而弗列。",
    "X72n1435_032:0366b15_0": "則其謬為尤甚。",
    "X72n1435_032:0366b15_1": "覺範繼贊而有述。",
    "X72n1435_032:0366b15_2": "高華秀朗。",
    "X72n1435_032:0366b15_3": "登作者之壇。",
    "X72n1435_032:0366b16_4": "然止傳禪宗諸彥。",
    "X72n1435_032:0366b16_5": "可以稱全史乎。",
    "X72n1435_032:0366b16_6": "今師所志。",
    "X72n1435_032:0366b16_7": "雖僅僅一州。",
    "X72n1435_032:0366b17_8": "而宣寧讓其雅當。",
    "X72n1435_032:0366b17_9": "覺範推其完備。",
    "X72n1435_032:0366b17_10": "逈然獨出。",
    "X72n1435_032:0366b18_11": "前無作者。",
    "X72n1435_032:0366b18_12": "即此可以窺師之一班矣。",
    "X72n1435_032:0366b18_13": "矧千載之上。",
    "X72n1435_032:0366b19_0": "藉師而傳之。",
    "X72n1435_032:0366b19_1": "千載之下。",
    "X72n1435_032:0366b19_2": "藉師而知之。",
    "X72n1435_032:0366b19_3": "是師之功。",
    "X72n1435_032:0366b19_4": "固在千載之上下也。",
    "X72n1435_032:0366b20_5": "建州稱弘釋者。",
    "X72n1435_032:0366b20_6": "非師而誰歟。",
    "X72n1435_032:0366b20_7": "余故樂觀厥成。",
    "X72n1435_032:0366b21_8": "不辭而為之序。",
    "X72n1435_032:0366b21_9": "抑又聞師撰述甚富。",
    "X72n1435_032:0366b21_10": "盡當殺青以傳。",
    "X72n1435_032:0366b22_11": "若然。",
    "X72n1435_032:0366b22_12": "則天下後世。",
    "X72n1435_032:0366b22_13": "有大造焉。",
    "X72n1435_032:0366b22_14": "非獨一建州也。",
    "X72n1435_032:0366b23_0": "余請。",
    "X72n1435_032:0366b23_1": "拭目以俟之。",
    "X72n1435_032:0366b24_0": "送老父還鄉序",
    "X72n1435_032:0366c01_0": "佛以一音說法。",
    "X72n1435_032:0366c01_1": "眾生隨類得解。",
    "X72n1435_032:0366c01_2": "眾生以隨類說法。",
    "X72n1435_032:0366c01_3": "亦以隨類得解。",
    "X72n1435_032:0366c02_4": "不肖憶出家時。",
    "X72n1435_032:0366c02_5": "順流抵石城。",
    "X72n1435_032:0366c02_6": "聞瓦官寺有法華講席。",
    "X72n1435_032:0366c03_7": "心甚慕之。",
    "X72n1435_032:0366c03_8": "逢一親知。",
    "X72n1435_032:0366c03_9": "逼令歸去。",
    "X72n1435_032:0366c03_10": "時以權語得脫。",
    "X72n1435_032:0366c04_11": "三月後。",
    "X72n1435_032:0366c04_12": "更逢一人。",
    "X72n1435_032:0366c04_13": "遽相謂曰。",
    "X72n1435_032:0366c04_14": "汝父有變。",
    "X72n1435_032:0366c04_15": "拱木將成。",
    "X72n1435_032:0366c05_16": "不肖追念罔極。",
    "X72n1435_032:0366c05_17": "撫躃大慟。",
    "X72n1435_032:0366c05_18": "幾至殞絕。",
    "X72n1435_032:0366c05_19": "復省前法華云。",
    "X72n1435_032:0366c06_20": "八子皆師玅光。",
    "X72n1435_032:0366c06_21": "又見淨藏淨眼。",
    "X72n1435_032:0366c06_22": "化父出家。",
    "X72n1435_032:0366c06_23": "此出世之孝。",
    "X72n1435_032:0366c07_24": "非世孝可比。",
    "X72n1435_032:0366c07_25": "因矢志出家。",
    "X72n1435_032:0366c07_26": "如箭離絃。",
    "X72n1435_032:0366c07_27": "無返迴勢矣。",
    "X72n1435_032:0366c08_28": "迄今三十餘載。",
    "X72n1435_032:0366c08_29": "未通鄉信。",
    "X72n1435_032:0366c08_30": "天啟四年五月。",
    "X72n1435_032:0366c08_31": "永豐少尹汪君。",
    "X72n1435_032:0366c09_32": "知不肖同里來訪。",
    "X72n1435_032:0366c09_33": "不肖自出家時。",
    "X72n1435_032:0366c09_34": "諱其姓氏。",
    "X72n1435_032:0366c10_35": "慮恐牽動世情。",
    "X72n1435_032:0366c10_36": "茂才楊淳之。",
    "X72n1435_032:0366c10_37": "汪君同行友也。",
    "X72n1435_032:0366c10_38": "詢叩不已。",
    "X72n1435_032:0366c11_39": "不肖偈示之曰。",
    "X72n1435_032:0366c11_40": "欲知家住處。",
    "X72n1435_032:0366c11_41": "陋巷世情幽。",
    "X72n1435_032:0366c11_42": "過水知吾姓。",
    "X72n1435_032:0366c12_43": "尋城識故坵。",
    "X72n1435_032:0366c12_44": "旋身依社稷。",
    "X72n1435_032:0366c12_45": "開眼見春秋。",
    "X72n1435_032:0366c12_46": "舊日閒遊慣。",
    "X72n1435_032:0366c13_47": "金雞墩上頭。",
    "X72n1435_032:0366c13_48": "初憶叔父或在。",
    "X72n1435_032:0366c13_49": "冀尚一見發彼勝心。",
    "X72n1435_032:0366c14_50": "淳之持偈歸問。",
    "X72n1435_032:0366c14_51": "則先叔已殂於不肖出家之次年。",
    "X72n1435_032:0366c15_52": "而老父反康善無恙。",
    "X72n1435_032:0366c15_53": "前之親友。",
    "X72n1435_032:0366c15_54": "徒以謾語相詒耳。",
    "X72n1435_032:0366c16_0": "老父一聞不肖住博山。",
    "X72n1435_032:0366c16_1": "不遠千里。",
    "X72n1435_032:0366c16_2": "操舟而來。",
    "X72n1435_032:0366c16_3": "時一見面。",
    "X72n1435_032:0366c17_4": "恍如夢中。",
    "X72n1435_032:0366c17_5": "悲喜交集。",
    "X72n1435_032:0366c17_6": "意謂再生也。",
    "X72n1435_032:0366c17_7": "不肖王父以上。",
    "X72n1435_032:0366c18_0": "皆未能望五。",
    "X72n1435_032:0366c18_1": "老父今七十有三。",
    "X72n1435_032:0366c18_2": "尚矍鑠善飯。",
    "X72n1435_032:0366c18_3": "以脩短較之。",
    "X72n1435_032:0366c19_4": "豈非再生乎。",
    "X72n1435_032:0366c19_5": "何意垂老得奉慈顏。",
    "X72n1435_032:0366c19_6": "屬有天幸。",
    "X72n1435_032:0366c19_7": "非思所及。",
    "X72n1435_032:0366c20_8": "因思彼親友。",
    "X72n1435_032:0366c20_9": "善說法要。",
    "X72n1435_032:0366c20_10": "即不肖導引師也。",
    "X72n1435_032:0366c20_11": "茲因老父思歸。",
    "X72n1435_032:0366c21_12": "計不能終養。",
    "X72n1435_032:0366c21_13": "暌離之罪。",
    "X72n1435_032:0366c21_14": "擢髮莫數。",
    "X72n1435_032:0366c21_15": "敬述生緣。",
    "X72n1435_032:0366c22_16": "以誌始末。",
    "X72n1435_032:0366c22_17": "云爾。",
    "X72n1435_032:0366c23_0": "八關戒序",
    "X72n1435_032:0366c24_0": "眾生受佛戒。",
    "X72n1435_032:0366c24_1": "即入諸佛位。",
    "X72n1435_032:0366c24_2": "位同大覺已。",
    "X72n1435_032:0366c24_3": "真是諸佛子。",
    "X72n1435_032:0367a01_0": "此菩薩戒。",
    "X72n1435_032:0367a01_1": "非八關戒也。",
    "X72n1435_032:0367a01_2": "然戒有大小。",
    "X72n1435_032:0367a01_3": "體非異同。",
    "X72n1435_032:0367a01_4": "戒有廣略。",
    "X72n1435_032:0367a02_5": "理無分析。",
    "X72n1435_032:0367a02_6": "戒有斷續。",
    "X72n1435_032:0367a02_7": "性絕開遮。",
    "X72n1435_032:0367a02_8": "自非利生大士。",
    "X72n1435_032:0367a03_0": "不無犯于塵勞。",
    "X72n1435_032:0367a03_1": "有力行人。",
    "X72n1435_032:0367a03_2": "何難行于頃刻。",
    "X72n1435_032:0367a03_3": "躋緣生之道岸。",
    "X72n1435_032:0367a04_4": "一日之齋。",
    "X72n1435_032:0367a04_5": "通累劫之津梁。",
    "X72n1435_032:0367a04_6": "一日之戒。",
    "X72n1435_032:0367a04_7": "謾言瑣細。",
    "X72n1435_032:0367a05_0": "具得全功。",
    "X72n1435_032:0367a05_1": "不論短長。",
    "X72n1435_032:0367a05_2": "頓同全戒。",
    "X72n1435_032:0367a05_3": "譬如飲海一滴。",
    "X72n1435_032:0367a05_4": "味同全海。",
    "X72n1435_032:0367a06_5": "又如一滴投海。",
    "X72n1435_032:0367a06_6": "同海全波。",
    "X72n1435_032:0367a06_7": "須知。",
    "X72n1435_032:0367a06_8": "戒淺功深。",
    "X72n1435_032:0367a06_9": "因微果徹。",
    "X72n1435_032:0367a07_10": "興聖人之方便。",
    "X72n1435_032:0367a07_11": "悲開詣實之權。",
    "X72n1435_032:0367a07_12": "標大士之指歸。",
    "X72n1435_032:0367a08_0": "喜見從權之實。",
    "X72n1435_032:0367a08_1": "清山主撮其簡要。",
    "X72n1435_032:0367a08_2": "吳太史覈其攸同。",
    "X72n1435_032:0367a09_0": "收圓行于一時。",
    "X72n1435_032:0367a09_1": "植殊因于永劫。",
    "X72n1435_032:0367a09_2": "不揀貴賤。",
    "X72n1435_032:0367a09_3": "勿論智愚。",
    "X72n1435_032:0367a10_0": "但辦堅實心腸。",
    "X72n1435_032:0367a10_1": "定入華嚴藏海。",
    "X72n1435_032:0367a11_0": "生生社戒殺放生序",
    "X72n1435_032:0367a12_0": "語云。",
    "X72n1435_032:0367a12_1": "護生須是殺。",
    "X72n1435_032:0367a12_2": "殺盡始安居。",
    "X72n1435_032:0367a12_3": "此勇猛丈夫。",
    "X72n1435_032:0367a12_4": "決定志也。",
    "X72n1435_032:0367a13_5": "良以。",
    "X72n1435_032:0367a13_6": "眾生恣無明窟。",
    "X72n1435_032:0367a13_7": "養爛壞身。",
    "X72n1435_032:0367a13_8": "祇解殺他。",
    "X72n1435_032:0367a13_9": "不知自殺。",
    "X72n1435_032:0367a14_10": "五魔熾盛。",
    "X72n1435_032:0367a14_11": "六賊戕害。",
    "X72n1435_032:0367a14_12": "四蛇毒攻。",
    "X72n1435_032:0367a14_13": "二鼠交嚙。",
    "X72n1435_032:0367a14_14": "從劫至劫。",
    "X72n1435_032:0367a15_15": "殺吾慧命。",
    "X72n1435_032:0367a15_16": "劫吾法財。",
    "X72n1435_032:0367a15_17": "可謂。",
    "X72n1435_032:0367a15_18": "大冤家大怨敵。",
    "X72n1435_032:0367a15_19": "而且親之愛之。",
    "X72n1435_032:0367a16_20": "從而結之。",
    "X72n1435_032:0367a16_21": "殺一切眾生。",
    "X72n1435_032:0367a16_22": "噉其肉血。",
    "X72n1435_032:0367a16_23": "恣養四大。",
    "X72n1435_032:0367a17_0": "一氣不來。",
    "X72n1435_032:0367a17_1": "盡成灰壤。",
    "X72n1435_032:0367a17_2": "因有限身。",
    "X72n1435_032:0367a17_3": "造無窮罪。",
    "X72n1435_032:0367a17_4": "根性陿劣。",
    "X72n1435_032:0367a18_0": "迷極不返。",
    "X72n1435_032:0367a18_1": "三途報至。",
    "X72n1435_032:0367a18_2": "誰當代受。",
    "X72n1435_032:0367a18_3": "若能返炤。",
    "X72n1435_032:0367a18_4": "是大不然。",
    "X72n1435_032:0367a19_0": "當披堅固鎧。",
    "X72n1435_032:0367a19_1": "仗金剛劒。",
    "X72n1435_032:0367a19_2": "斬魔賊于五蘊葢林中。",
    "X72n1435_032:0367a19_3": "逐蛇鼠于無陰陽地上。",
    "X72n1435_032:0367a20_4": "廣法身之慈恕。",
    "X72n1435_032:0367a20_5": "起同體之大悲。",
    "X72n1435_032:0367a20_6": "見一切眾生。",
    "X72n1435_032:0367a21_7": "如一子想。",
    "X72n1435_032:0367a21_8": "無彼我相。",
    "X72n1435_032:0367a21_9": "以無緣慈。",
    "X72n1435_032:0367a21_10": "化無相眾生。",
    "X72n1435_032:0367a22_11": "此雲棲老人。",
    "X72n1435_032:0367a22_12": "深達法相也。",
    "X72n1435_032:0367a22_13": "湛上座興悲運慈。",
    "X72n1435_032:0367a22_14": "悉倣雲棲軌則而桐之。",
    "X72n1435_032:0367a23_15": "諸上善人互相鼓導。",
    "X72n1435_032:0367a23_16": "生社繇此而興。",
    "X72n1435_032:0367a24_17": "殺業繇此而斷。",
    "X72n1435_032:0367a24_18": "豈但戒殺。",
    "X72n1435_032:0367a24_19": "而且放生。",
    "X72n1435_032:0367a24_20": "豈但救眾生命。",
    "X72n1435_032:0367b01_21": "實乃續諸佛慧命。",
    "X72n1435_032:0367b01_22": "廣一切眾生慧命也。",
    "X72n1435_032:0367b01_23": "何以故。",
    "X72n1435_032:0367b01_24": "以同體故。",
    "X72n1435_032:0367b02_25": "其無功之功。",
    "X72n1435_032:0367b02_26": "無德之德。",
    "X72n1435_032:0367b02_27": "所謂以殺為生。",
    "X72n1435_032:0367b02_28": "吾不得以筆舌名之也。",
    "X72n1435_032:0367b04_0": "報恩品序",
    "X72n1435_032:0367b05_0": "聞夫。",
    "X72n1435_032:0367b05_1": "苦海無邊。",
    "X72n1435_032:0367b05_2": "慈恩匪一。",
    "X72n1435_032:0367b05_3": "情想局于限量。",
    "X72n1435_032:0367b05_4": "識性迷于無知。",
    "X72n1435_032:0367b06_5": "限量則灼有親疎。",
    "X72n1435_032:0367b06_6": "無知則妄分彼我。",
    "X72n1435_032:0367b06_7": "輪迴于生死。",
    "X72n1435_032:0367b07_8": "三途之業報何窮。",
    "X72n1435_032:0367b07_9": "旅泊于人天。",
    "X72n1435_032:0367b07_10": "九有之昇沉不息。",
    "X72n1435_032:0367b08_0": "改頭換面。",
    "X72n1435_032:0367b08_1": "多生父母結盜賊之冤。",
    "X72n1435_032:0367b08_2": "戴角披毛。",
    "X72n1435_032:0367b08_3": "歷劫宗親償兒女之債。",
    "X72n1435_032:0367b09_4": "大師興慈悲念。",
    "X72n1435_032:0367b09_5": "說四難報之法施。",
    "X72n1435_032:0367b09_6": "長者現衰邁年。",
    "X72n1435_032:0367b10_7": "誨一惡性之逆子。",
    "X72n1435_032:0367b10_8": "胸前而寢。",
    "X72n1435_032:0367b10_9": "膝上而遊。",
    "X72n1435_032:0367b11_0": "真情普矣。",
    "X72n1435_032:0367b11_1": "男為慈父。",
    "X72n1435_032:0367b11_2": "女為悲母。",
    "X72n1435_032:0367b11_3": "親愛彌乎。",
    "X72n1435_032:0367b11_4": "以世界為殿堂。",
    "X72n1435_032:0367b12_5": "以人民為根本。",
    "X72n1435_032:0367b12_6": "　國主之深恩莫報。",
    "X72n1435_032:0367b12_7": "以神通為利樂。",
    "X72n1435_032:0367b13_8": "以度行為修因。",
    "X72n1435_032:0367b13_9": "諸佛之慈德無休。",
    "X72n1435_032:0367b13_10": "捨幻化財。",
    "X72n1435_032:0367b13_11": "植人天福。",
    "X72n1435_032:0367b14_12": "身命頓超。",
    "X72n1435_032:0367b14_13": "棄有漏軀。",
    "X72n1435_032:0367b14_14": "絕堅固想。",
    "X72n1435_032:0367b14_15": "傳心為最。",
    "X72n1435_032:0367b14_16": "解法義。",
    "X72n1435_032:0367b15_17": "而流通法義。",
    "X72n1435_032:0367b15_18": "還他三界智人。",
    "X72n1435_032:0367b15_19": "知深恩而報答深恩。",
    "X72n1435_032:0367b16_20": "須是九濤居士。",
    "X72n1435_032:0367b16_21": "不辭饒舌。",
    "X72n1435_032:0367b16_22": "願入斯乘。",
    "X72n1435_032:0367b17_0": "壽趙湛虗居士七袠序",
    "X72n1435_032:0367b18_0": "曩予讀淨名經云。",
    "X72n1435_032:0367b18_1": "塵勞之儔。",
    "X72n1435_032:0367b18_2": "為如來種。",
    "X72n1435_032:0367b18_3": "又云。",
    "X72n1435_032:0367b18_4": "高原陸地不生蓮花。",
    "X72n1435_032:0367b19_5": "卑濕污泥。",
    "X72n1435_032:0367b19_6": "乃生此花。",
    "X72n1435_032:0367b19_7": "則知佛法非專談真如。",
    "X72n1435_032:0367b20_8": "獨說無生。",
    "X72n1435_032:0367b20_9": "以醉人於忘情泯識之鄉。",
    "X72n1435_032:0367b20_10": "使跛驢心智。",
    "X72n1435_032:0367b21_11": "自困於灰稿也。",
    "X72n1435_032:0367b21_12": "葢佛示出家。",
    "X72n1435_032:0367b21_13": "以明真諦非有為。",
    "X72n1435_032:0367b21_14": "破凡夫著家。",
    "X72n1435_032:0367b22_15": "使出三界二十五有之籠罩也。",
    "X72n1435_032:0367b22_16": "淨明示現居家。",
    "X72n1435_032:0367b23_17": "以明世諦非無為。",
    "X72n1435_032:0367b23_18": "破二乘越俗。",
    "X72n1435_032:0367b23_19": "使不淪於斷空寂滅之坑塹也。",
    "X72n1435_032:0367b24_20": "既曰示現。",
    "X72n1435_032:0367b24_21": "各有儀則。",
    "X72n1435_032:0367b24_22": "豈彼釋迦無能逃位皇宮。",
    "X72n1435_032:0367c01_23": "淨名好事嗜痂毗耶耶。",
    "X72n1435_032:0367c01_24": "觀彼曼殊叩室。",
    "X72n1435_032:0367c01_25": "競談不二之時。",
    "X72n1435_032:0367c02_26": "而維摩僅置一空牀。",
    "X72n1435_032:0367c02_27": "除諸他有。",
    "X72n1435_032:0367c02_28": "則此老雖示有家。",
    "X72n1435_032:0367c03_29": "而風味澹然。",
    "X72n1435_032:0367c03_30": "宛爾一禿居士耳。",
    "X72n1435_032:0367c03_31": "佛則示居華藏。",
    "X72n1435_032:0367c04_32": "法軌森嚴。",
    "X72n1435_032:0367c04_33": "不壞世間。",
    "X72n1435_032:0367c04_34": "而熾談實相。",
    "X72n1435_032:0367c04_35": "正顯真俗非殊。",
    "X72n1435_032:0367c05_36": "淨穢何異。",
    "X72n1435_032:0367c05_37": "誰謂世法分疆裂界。",
    "X72n1435_032:0367c05_38": "徒與虗空畫痕爪也。",
    "X72n1435_032:0367c06_39": "余初至董巖時。",
    "X72n1435_032:0367c06_40": "即與趙湛虗公。",
    "X72n1435_032:0367c06_41": "為法喜交。",
    "X72n1435_032:0367c06_42": "公之翁號豫齋居士。",
    "X72n1435_032:0367c07_43": "高才碩德。",
    "X72n1435_032:0367c07_44": "為建谿第一流人物。",
    "X72n1435_032:0367c07_45": "且深通佛法。",
    "X72n1435_032:0367c08_46": "以楞嚴為室廬。",
    "X72n1435_032:0367c08_47": "以宗乘作茶飯。",
    "X72n1435_032:0367c08_48": "故公篤信斯道。",
    "X72n1435_032:0367c09_0": "於此二法亦具有昌獨之好。",
    "X72n1435_032:0367c09_1": "且世世佩為庭訓。",
    "X72n1435_032:0367c09_2": "冀子若孫輩。",
    "X72n1435_032:0367c10_3": "咸方舟並駕。",
    "X72n1435_032:0367c10_4": "遊於法海覺苑也。",
    "X72n1435_032:0367c10_5": "道貌和衷。",
    "X72n1435_032:0367c10_6": "氣味如春。",
    "X72n1435_032:0367c11_7": "風釀品物。",
    "X72n1435_032:0367c11_8": "善行若飴。",
    "X72n1435_032:0367c11_9": "德聲遐布。",
    "X72n1435_032:0367c11_10": "且能即塵勞為佛事。",
    "X72n1435_032:0367c12_11": "踞欲界作禪牀。",
    "X72n1435_032:0367c12_12": "其眎董巖叢席。",
    "X72n1435_032:0367c12_13": "如急已家政。",
    "X72n1435_032:0367c13_0": "然凡院務職事有缺典者。",
    "X72n1435_032:0367c13_1": "莫不悉心調理。",
    "X72n1435_032:0367c13_2": "多方周贍。",
    "X72n1435_032:0367c14_0": "今董巖千指麟萃英髦鳳翔。",
    "X72n1435_032:0367c14_1": "人咸目為薝蔔之藪。",
    "X72n1435_032:0367c14_2": "皆公弘護力也。",
    "X72n1435_032:0367c15_3": "若爾即謂淨名再來。",
    "X72n1435_032:0367c15_4": "示現有家。",
    "X72n1435_032:0367c15_5": "亦可矣。",
    "X72n1435_032:0367c16_0": "以孝友為儀刑。",
    "X72n1435_032:0367c16_1": "以詩禮為章服。",
    "X72n1435_032:0367c16_2": "故其令胤傳芳。",
    "X72n1435_032:0367c16_3": "森森然如璚枝遶砌。",
    "X72n1435_032:0367c17_4": "玉樹欹風。",
    "X72n1435_032:0367c17_5": "公雖未展垂天之翼。",
    "X72n1435_032:0367c17_6": "以薦珍於廟廊。",
    "X72n1435_032:0367c18_7": "吾知公天性合道。",
    "X72n1435_032:0367c18_8": "固以浮雲軒冕然而積厚。",
    "X72n1435_032:0367c19_9": "流光造物。",
    "X72n1435_032:0367c19_10": "亦不能更蘄於來哲。",
    "X72n1435_032:0367c19_11": "公何以此自多為哉。",
    "X72n1435_032:0367c20_12": "吾意。",
    "X72n1435_032:0367c20_13": "公之觀身心世界。",
    "X72n1435_032:0367c20_14": "水中漚花也。",
    "X72n1435_032:0367c20_15": "家緣眷屬。",
    "X72n1435_032:0367c20_16": "一戲劇場也。",
    "X72n1435_032:0367c21_17": "壽相延促。",
    "X72n1435_032:0367c21_18": "塵劫抹點也。",
    "X72n1435_032:0367c21_19": "其襟度曠邈。",
    "X72n1435_032:0367c21_20": "心量高明。",
    "X72n1435_032:0367c22_21": "且欲摶捖大千。",
    "X72n1435_032:0367c22_22": "不啻倒擲舄履。",
    "X72n1435_032:0367c22_23": "令撲地作笑弄聲耳。",
    "X72n1435_032:0367c23_24": "今春秋揆度正欲不踰矩之辰。",
    "X72n1435_032:0367c23_25": "余忝方外道誼。",
    "X72n1435_032:0367c24_0": "不能獻度索之桃。",
    "X72n1435_032:0367c24_1": "斟椒花之醞。",
    "X72n1435_032:0367c24_2": "聊裁短偈。",
    "X72n1435_032:0367c24_3": "以當優曇一枝。",
    "X72n1435_032:0368a01_4": "為公期頥之祝。",
    "X72n1435_032:0368a01_5": "偈曰。",
    "X72n1435_032:0368a01_6": "有美人兮履道素。",
    "X72n1435_032:0368a01_7": "慧光燦然渾不露。",
    "X72n1435_032:0368a02_8": "饑餐渴飲更奚為。",
    "X72n1435_032:0368a02_9": "語必追隨嘿同處。",
    "X72n1435_032:0368a02_10": "拄杖撩天那復高。",
    "X72n1435_032:0368a03_11": "滄溟倒跨石為橋。",
    "X72n1435_032:0368a03_12": "丈六金身作莖草。",
    "X72n1435_032:0368a03_13": "大千頫視掌中桃。",
    "X72n1435_032:0368a04_14": "世波盡道蕩人性。",
    "X72n1435_032:0368a04_15": "魚龍返以水為命。",
    "X72n1435_032:0368a05_0": "逆洄順遡得其情。",
    "X72n1435_032:0368a05_1": "業流灣環風送艇。",
    "X72n1435_032:0368a05_2": "芥城劫石許多秋。",
    "X72n1435_032:0368a06_3": "歷覧須臾一瞬周。",
    "X72n1435_032:0368a06_4": "有問只今遐算事。",
    "X72n1435_032:0368a06_5": "眉毛剔起笑夷猶。",
    "X72n1435_032:0368a08_0": "壽黃心鏡居士五袠序",
    "X72n1435_032:0368a09_0": "夫脩行者。",
    "X72n1435_032:0368a09_1": "於相不住壽者相。",
    "X72n1435_032:0368a09_2": "百年等空華。",
    "X72n1435_032:0368a09_3": "如理得常住。",
    "X72n1435_032:0368a10_4": "若執於百年壽命。",
    "X72n1435_032:0368a10_5": "祇得百年。",
    "X72n1435_032:0368a10_6": "悉被明暗二境遷變。",
    "X72n1435_032:0368a11_0": "非得常住法也。",
    "X72n1435_032:0368a11_1": "傅大士云。",
    "X72n1435_032:0368a11_2": "有物先天地。",
    "X72n1435_032:0368a11_3": "無形本寂寥。",
    "X72n1435_032:0368a12_0": "能為萬象主。",
    "X72n1435_032:0368a12_1": "不逐四時凋。",
    "X72n1435_032:0368a12_2": "云萬象主者。",
    "X72n1435_032:0368a12_3": "即常住法。",
    "X72n1435_032:0368a12_4": "金藏雲起而非成。",
    "X72n1435_032:0368a13_5": "毗嵐風吹而非壞。",
    "X72n1435_032:0368a13_6": "劫火洞然。",
    "X72n1435_032:0368a13_7": "我土樂隱。",
    "X72n1435_032:0368a14_8": "纔達此理。",
    "X72n1435_032:0368a14_9": "悟不由師。",
    "X72n1435_032:0368a14_10": "稱此理而曰壽。",
    "X72n1435_032:0368a14_11": "非劫運也。",
    "X72n1435_032:0368a14_12": "稱此理而曰命。",
    "X72n1435_032:0368a15_13": "非生滅也。",
    "X72n1435_032:0368a15_14": "稱此理而曰常。",
    "X72n1435_032:0368a15_15": "非斷續也。",
    "X72n1435_032:0368a15_16": "稱此理而曰住。",
    "X72n1435_032:0368a16_17": "非去來也。",
    "X72n1435_032:0368a16_18": "其劫運生滅斷續去來。",
    "X72n1435_032:0368a16_19": "悉鏡中花相。",
    "X72n1435_032:0368a17_20": "於實際理地。",
    "X72n1435_032:0368a17_21": "求其纖毫實迹。",
    "X72n1435_032:0368a17_22": "了不可得。",
    "X72n1435_032:0368a17_23": "於不可得中。",
    "X72n1435_032:0368a18_24": "聖功獨照。",
    "X72n1435_032:0368a18_25": "曰壽曰命。",
    "X72n1435_032:0368a18_26": "曰常曰住。",
    "X72n1435_032:0368a18_27": "皆賸語也。",
    "X72n1435_032:0368a18_28": "余以此壽居士曰。",
    "X72n1435_032:0368a19_29": "無量壽。",
    "X72n1435_032:0368a19_30": "無上壽。",
    "X72n1435_032:0368a19_31": "無等壽。",
    "X72n1435_032:0368a19_32": "無等等壽。",
    "X72n1435_032:0368a19_33": "磨塵點墨。",
    "X72n1435_032:0368a20_34": "不足以較其優劣也。",
    "X72n1435_032:0368a20_35": "偈曰。",
    "X72n1435_032:0368a20_36": "識得金剛不壞身。",
    "X72n1435_032:0368a21_0": "眼中童子面前人。",
    "X72n1435_032:0368a21_1": "謾言桃實三千載。",
    "X72n1435_032:0368a21_2": "賸有靈枝劫外春。",
    "X72n1435_032:0368a23_0": "引",
    "X72n1435_032:0368a24_0": "題顧醒翁居士園菴齋亭引",
    "X72n1435_032:0368b01_0": "昔維摩居士。",
    "X72n1435_032:0368b01_1": "居毗耶城。",
    "X72n1435_032:0368b01_2": "播揚大教。",
    "X72n1435_032:0368b01_3": "今醒老居士。",
    "X72n1435_032:0368b01_4": "居石頭城。",
    "X72n1435_032:0368b02_5": "護持大法。",
    "X72n1435_032:0368b02_6": "古之世界。",
    "X72n1435_032:0368b02_7": "今之世界。",
    "X72n1435_032:0368b02_8": "古之天地。",
    "X72n1435_032:0368b02_9": "今之天地。",
    "X72n1435_032:0368b03_10": "古之日月。",
    "X72n1435_032:0368b03_11": "今之日月。",
    "X72n1435_032:0368b03_12": "古之人物。",
    "X72n1435_032:0368b03_13": "今之人物。",
    "X72n1435_032:0368b03_14": "維摩即醒老。",
    "X72n1435_032:0368b04_15": "醒老即維摩。",
    "X72n1435_032:0368b04_16": "闡揚正法。",
    "X72n1435_032:0368b04_17": "光顯末運。",
    "X72n1435_032:0368b04_18": "無二無別。",
    "X72n1435_032:0368b05_0": "故以醒老之菴。",
    "X72n1435_032:0368b05_1": "扁之曰金粟。",
    "X72n1435_032:0368b05_2": "善財童子五十三參。",
    "X72n1435_032:0368b05_3": "百城重蠒。",
    "X72n1435_032:0368b06_4": "而醒老不離跬步。",
    "X72n1435_032:0368b06_5": "默究斯道。",
    "X72n1435_032:0368b06_6": "故以閣曰南詢。",
    "X72n1435_032:0368b07_0": "以娑婆窺淨土十萬億剎。",
    "X72n1435_032:0368b07_1": "悉以蓮為標的。",
    "X72n1435_032:0368b07_2": "居士現前寶池沸湧。",
    "X72n1435_032:0368b08_3": "菡萏開敷。",
    "X72n1435_032:0368b08_4": "故以亭曰樂邦。",
    "X72n1435_032:0368b08_5": "居士世族名家。",
    "X72n1435_032:0368b09_0": "望隆朝野。",
    "X72n1435_032:0368b09_1": "英賢疊出。",
    "X72n1435_032:0368b09_2": "科第蟬綿。",
    "X72n1435_032:0368b09_3": "故以館曰甲秀。",
    "X72n1435_032:0368b09_4": "居士焚香晏坐。",
    "X72n1435_032:0368b10_5": "注意禪那。",
    "X72n1435_032:0368b10_6": "履列祖芳塵。",
    "X72n1435_032:0368b10_7": "啟今人慧鑑。",
    "X72n1435_032:0368b10_8": "故以堂曰鏡心。",
    "X72n1435_032:0368b11_9": "居士襟懷豁達。",
    "X72n1435_032:0368b11_10": "塵境不侵。",
    "X72n1435_032:0368b11_11": "故以齋曰澹然。",
    "X72n1435_032:0368b12_0": "居士百務紛紜。",
    "X72n1435_032:0368b12_1": "心空澄湛。",
    "X72n1435_032:0368b12_2": "故以齋曰純一。",
    "X72n1435_032:0368b12_3": "林泉掩映。",
    "X72n1435_032:0368b13_0": "竹樹交清。",
    "X72n1435_032:0368b13_1": "故以亭曰挹翠。",
    "X72n1435_032:0368b13_2": "斯園也。",
    "X72n1435_032:0368b13_3": "銷塵坌之萬緣。",
    "X72n1435_032:0368b13_4": "融古今之一致。",
    "X72n1435_032:0368b14_5": "入金粟菴。",
    "X72n1435_032:0368b14_6": "談不二語。",
    "X72n1435_032:0368b14_7": "登南詢閣。",
    "X72n1435_032:0368b14_8": "悟菩提心。",
    "X72n1435_032:0368b15_9": "憩樂邦亭。",
    "X72n1435_032:0368b15_10": "注西方境。",
    "X72n1435_032:0368b15_11": "讀甲秀館。",
    "X72n1435_032:0368b15_12": "生夢筆華。",
    "X72n1435_032:0368b15_13": "坐鏡心堂。",
    "X72n1435_032:0368b16_14": "翻竺乾案。",
    "X72n1435_032:0368b16_15": "範模純一。",
    "X72n1435_032:0368b16_16": "心地澹然。",
    "X72n1435_032:0368b16_17": "挹翠色于深林。",
    "X72n1435_032:0368b16_18": "噉竹香于嘉樹。",
    "X72n1435_032:0368b17_19": "居士幽致之樂。",
    "X72n1435_032:0368b17_20": "禪悅之趣。",
    "X72n1435_032:0368b17_21": "逈出尋常萬萬。",
    "X72n1435_032:0368b18_22": "揮筆及此。",
    "X72n1435_032:0368b18_23": "爽心怡神。",
    "X72n1435_032:0368b18_24": "不啻置身園中。",
    "X72n1435_032:0368b18_25": "想居士時覧斯語。",
    "X72n1435_032:0368b19_26": "貧衲雖隔千里。",
    "X72n1435_032:0368b19_27": "未必不朝夕左右也。",
    "X72n1435_032:0368b20_0": "跋",
    "X72n1435_032:0368b21_0": "正觀禪人刺血書華嚴諸經跋",
    "X72n1435_032:0368b22_0": "夫大法難逢。",
    "X72n1435_032:0368b22_1": "真乘罕遇。",
    "X72n1435_032:0368b22_2": "千燈供佛。",
    "X72n1435_032:0368b22_3": "酧半偈以何辭。",
    "X72n1435_032:0368b22_4": "四句潤心。",
    "X72n1435_032:0368b23_5": "捨全身而不恡。",
    "X72n1435_032:0368b23_6": "況破塵至寶。",
    "X72n1435_032:0368b23_7": "法界全經。",
    "X72n1435_032:0368b23_8": "大士因門。",
    "X72n1435_032:0368b24_9": "如來果海。",
    "X72n1435_032:0368b24_10": "塞滿龍宮之藏。",
    "X72n1435_032:0368b24_11": "具在一塵。",
    "X72n1435_032:0368b24_12": "播揚鷲嶺之奇。",
    "X72n1435_032:0368c01_13": "縱橫萬象。",
    "X72n1435_032:0368c01_14": "自非曠劫植菩提之因地。",
    "X72n1435_032:0368c01_15": "安能手捧目觀。",
    "X72n1435_032:0368c02_16": "偶此勝緣哉。",
    "X72n1435_032:0368c02_17": "正觀禪人。",
    "X72n1435_032:0368c02_18": "夙熏種智。",
    "X72n1435_032:0368c02_19": "修假多方。",
    "X72n1435_032:0368c02_20": "出娑竭之湧泉。",
    "X72n1435_032:0368c03_21": "繡貫花之妙品。",
    "X72n1435_032:0368c03_22": "加利刃不見當機之痛。",
    "X72n1435_032:0368c04_0": "流鮮血無慚捐體之施。",
    "X72n1435_032:0368c04_1": "書報恩金剛華嚴。",
    "X72n1435_032:0368c04_2": "共計一百有餘卷。",
    "X72n1435_032:0368c05_3": "以弘寶筏。",
    "X72n1435_032:0368c05_4": "庶渡迷津。",
    "X72n1435_032:0368c05_5": "蔓衍不二之雄文。",
    "X72n1435_032:0368c05_6": "舌根流出。",
    "X72n1435_032:0368c06_7": "騰躍難思之義海。",
    "X72n1435_032:0368c06_8": "筆底翻來。",
    "X72n1435_032:0368c06_9": "反觀法帙得成。",
    "X72n1435_032:0368c06_10": "肌膚無損。",
    "X72n1435_032:0368c07_11": "勝妙廣博。",
    "X72n1435_032:0368c07_12": "幻質何乖。",
    "X72n1435_032:0368c07_13": "得浮世之便宜。",
    "X72n1435_032:0368c07_14": "履法門之徑路。",
    "X72n1435_032:0368c08_15": "妙緣斯在。",
    "X72n1435_032:0368c08_16": "道岸非遙。",
    "X72n1435_032:0368c09_0": "記",
    "X72n1435_032:0368c10_0": "惟德禪人血書經記",
    "X72n1435_032:0368c11_0": "教中云。",
    "X72n1435_032:0368c11_1": "施者有四。",
    "X72n1435_032:0368c11_2": "謂財法身命。",
    "X72n1435_032:0368c11_3": "較之則財法尚易。",
    "X72n1435_032:0368c11_4": "而身命為難。",
    "X72n1435_032:0368c12_5": "身尚易而命猶難。",
    "X72n1435_032:0368c12_6": "故我釋迦大師。",
    "X72n1435_032:0368c12_7": "諦觀大地。",
    "X72n1435_032:0368c13_8": "無微塵許不是捨身命處。",
    "X72n1435_032:0368c13_9": "今之人。",
    "X72n1435_032:0368c13_10": "身外之財尚堅守。",
    "X72n1435_032:0368c14_11": "無纖毫解脫。",
    "X72n1435_032:0368c14_12": "況身命乎。",
    "X72n1435_032:0368c14_13": "吾徒道容者。",
    "X72n1435_032:0368c14_14": "刺血寫五大部。",
    "X72n1435_032:0368c15_15": "送博山。",
    "X72n1435_032:0368c15_16": "與藏經同處。",
    "X72n1435_032:0368c15_17": "使展閱者。",
    "X72n1435_032:0368c15_18": "知有不惜身命而重大法。",
    "X72n1435_032:0368c16_19": "人各效之。",
    "X72n1435_032:0368c16_20": "解脫法門。",
    "X72n1435_032:0368c16_21": "不待重宣其意。",
    "X72n1435_032:0368c16_22": "而功德美行。",
    "X72n1435_032:0368c17_23": "可與輪藏并峙而無盡。",
    "X72n1435_032:0368c17_24": "不亦善乎。",
    "X72n1435_032:0368c17_25": "仍發心寫華嚴三品。",
    "X72n1435_032:0368c18_26": "日為課誦。",
    "X72n1435_032:0368c18_27": "作如意寶。",
    "X72n1435_032:0368c18_28": "返魂藥。",
    "X72n1435_032:0368c18_29": "渡海囊。",
    "X72n1435_032:0368c18_30": "余因焚香述偈以記之。",
    "X72n1435_032:0368c19_31": "云爾。",
    "X72n1435_032:0368c20_0": "稽首無上法。",
    "X72n1435_032:0368c20_1": "甚深脩多羅。",
    "X72n1435_032:0368c20_2": "受持疾成佛。",
    "X72n1435_032:0368c20_3": "故不惜身命。",
    "X72n1435_032:0368c21_0": "剝皮可為紙。",
    "X72n1435_032:0368c21_1": "析骨當為筆。",
    "X72n1435_032:0368c21_2": "刺血以為墨。",
    "X72n1435_032:0368c21_3": "何況於舌根。",
    "X72n1435_032:0368c22_0": "譬如破獘囊。",
    "X72n1435_032:0368c22_1": "而盛無價寶。",
    "X72n1435_032:0368c22_2": "祇欲貴寶故。",
    "X72n1435_032:0368c22_3": "何惜囊破壞。",
    "X72n1435_032:0368c23_0": "又如淤泥中。",
    "X72n1435_032:0368c23_1": "而生妙蓮花。",
    "X72n1435_032:0368c23_2": "見者皆愛樂。",
    "X72n1435_032:0368c23_3": "終不惜泥土此身等土囊。",
    "X72n1435_032:0368c24_4": "能生無上法。",
    "X72n1435_032:0368c24_5": "昔人捨全身。",
    "X72n1435_032:0368c24_6": "為求四句偈。",
    "X72n1435_032:0369a01_0": "惟損一根故。",
    "X72n1435_032:0369a01_1": "成此若干卷。",
    "X72n1435_032:0369a01_2": "是大得便宜。",
    "X72n1435_032:0369a01_3": "是名真解脫。",
    "X72n1435_032:0369a02_0": "是破此慳囊。",
    "X72n1435_032:0369a02_1": "是成諸佛智。",
    "X72n1435_032:0369a02_2": "願法界眾生。",
    "X72n1435_032:0369a02_3": "同遊華藏海。",
    "X72n1435_032:0369a03_0": "廣行眾善行。",
    "X72n1435_032:0369a03_1": "皆共成佛道。",
    "X72n1435_032:0369a04_0": "文",
    "X72n1435_032:0369a05_0": "念佛文為棲霞一門禪人說",
    "X72n1435_032:0369a06_0": "夫淨土者。",
    "X72n1435_032:0369a06_1": "乃一切眾生。",
    "X72n1435_032:0369a06_2": "究竟安身立命處也。",
    "X72n1435_032:0369a06_3": "念佛者。",
    "X72n1435_032:0369a07_0": "乃一切眾生。",
    "X72n1435_032:0369a07_1": "第一背塵合覺門也。",
    "X72n1435_032:0369a07_2": "寂光真淨。",
    "X72n1435_032:0369a07_3": "惟是佛居。",
    "X72n1435_032:0369a08_4": "從此垂作實報淨。",
    "X72n1435_032:0369a08_5": "方便淨。",
    "X72n1435_032:0369a08_6": "及同居淨。",
    "X72n1435_032:0369a08_7": "以接引彼菩薩人。",
    "X72n1435_032:0369a09_8": "二乘人。",
    "X72n1435_032:0369a09_9": "及凡夫人。",
    "X72n1435_032:0369a09_10": "既從實以施權。",
    "X72n1435_032:0369a09_11": "則無權而非實。",
    "X72n1435_032:0369a10_12": "既隨義以立名。",
    "X72n1435_032:0369a10_13": "應顧名而得義。",
    "X72n1435_032:0369a10_14": "惟淨土之致不明。",
    "X72n1435_032:0369a11_0": "故念佛之理亦昧。",
    "X72n1435_032:0369a11_1": "但謂自性即是彌陀。",
    "X72n1435_032:0369a11_2": "而不知彌陀不外自性。",
    "X72n1435_032:0369a12_3": "但謂無念乃為真念。",
    "X72n1435_032:0369a12_4": "而不知淨念即是無念。",
    "X72n1435_032:0369a13_5": "是以究極於一心不亂。",
    "X72n1435_032:0369a13_6": "則諸佛心內眾生。",
    "X72n1435_032:0369a13_7": "時時成道。",
    "X72n1435_032:0369a14_8": "托修於執持名號。",
    "X72n1435_032:0369a14_9": "則眾生心內諸佛。",
    "X72n1435_032:0369a14_10": "念念證真。",
    "X72n1435_032:0369a14_11": "念惟是佛。",
    "X72n1435_032:0369a15_12": "如百川朝宗大海。",
    "X72n1435_032:0369a15_13": "佛全在念。",
    "X72n1435_032:0369a15_14": "如瑠璃內含寶月。",
    "X72n1435_032:0369a16_15": "不惟感應道交。",
    "X72n1435_032:0369a16_16": "亦且自他不二。",
    "X72n1435_032:0369a16_17": "但令諦信不疑。",
    "X72n1435_032:0369a16_18": "決定無諸岐曲也。",
    "X72n1435_032:0369a17_19": "余幼慕禪宗。",
    "X72n1435_032:0369a17_20": "得入壽昌之室。",
    "X72n1435_032:0369a17_21": "謬承記莂。",
    "X72n1435_032:0369a18_22": "三十餘年。",
    "X72n1435_032:0369a18_23": "寥寥海內有唱莫和。",
    "X72n1435_032:0369a18_24": "刁刀魚魯。",
    "X72n1435_032:0369a18_25": "轉見參差。",
    "X72n1435_032:0369a19_26": "方知祖師西來事出非常。",
    "X72n1435_032:0369a19_27": "有大利者。",
    "X72n1435_032:0369a19_28": "必有大害。",
    "X72n1435_032:0369a19_29": "功高易進。",
    "X72n1435_032:0369a20_30": "無如淨土一門。",
    "X72n1435_032:0369a20_31": "念佛得度今正是時之語。",
    "X72n1435_032:0369a20_32": "非欺我也。",
    "X72n1435_032:0369a21_33": "一門禪友。",
    "X72n1435_032:0369a21_34": "結蓮社於棲霞禪室。",
    "X72n1435_032:0369a21_35": "攝念佛人。",
    "X72n1435_032:0369a21_36": "同歸淨土。",
    "X72n1435_032:0369a22_37": "可謂。",
    "X72n1435_032:0369a22_38": "末世津梁。",
    "X72n1435_032:0369a22_39": "人天標榜。",
    "X72n1435_032:0369a22_40": "乞余一言。",
    "X72n1435_032:0369a22_41": "以作警策。",
    "X72n1435_032:0369a23_42": "余嘗謂。",
    "X72n1435_032:0369a23_43": "一切行者。",
    "X72n1435_032:0369a23_44": "須信自心有成佛種子。",
    "X72n1435_032:0369a23_45": "信如來有接引大願。",
    "X72n1435_032:0369a24_46": "信有淨土可生。",
    "X72n1435_032:0369a24_47": "信有彌陀可見。",
    "X72n1435_032:0369a24_48": "將一句佛號。",
    "X72n1435_032:0369b01_49": "驀直念去。",
    "X72n1435_032:0369b01_50": "念到一念不生。",
    "X72n1435_032:0369b01_51": "則凡心即是佛心。",
    "X72n1435_032:0369b01_52": "更何生死不了。",
    "X72n1435_032:0369b02_53": "真可謂。",
    "X72n1435_032:0369b02_54": "直捷穩當者矣。",
    "X72n1435_032:0369b02_55": "勢至圓通。",
    "X72n1435_032:0369b02_56": "文殊三昧。",
    "X72n1435_032:0369b03_57": "誰有智者。",
    "X72n1435_032:0369b03_58": "而肯捨置弗修習哉。",
    "X72n1435_032:0369b04_0": "放生文為報恩自觀以之二禪人說",
    "X72n1435_032:0369b05_0": "五濁惡世。",
    "X72n1435_032:0369b05_1": "缺陷眾生。",
    "X72n1435_032:0369b05_2": "舉足動步。",
    "X72n1435_032:0369b05_3": "無不是業。",
    "X72n1435_032:0369b05_4": "招因帶果。",
    "X72n1435_032:0369b06_0": "無不是苦。",
    "X72n1435_032:0369b06_1": "而殺生一事。",
    "X72n1435_032:0369b06_2": "則猶業中之業。",
    "X72n1435_032:0369b06_3": "苦中之苦也。",
    "X72n1435_032:0369b07_0": "止惡行善。",
    "X72n1435_032:0369b07_1": "莫急於戒殺。",
    "X72n1435_032:0369b07_2": "轉毒為慈。",
    "X72n1435_032:0369b07_3": "莫善於放生。",
    "X72n1435_032:0369b07_4": "故五戒十戒。",
    "X72n1435_032:0369b08_5": "具足三聚。",
    "X72n1435_032:0369b08_6": "莫不以此為初基。",
    "X72n1435_032:0369b08_7": "果位聖人。",
    "X72n1435_032:0369b08_8": "因中大士。",
    "X72n1435_032:0369b09_9": "履真上賢。",
    "X72n1435_032:0369b09_10": "出假菩薩。",
    "X72n1435_032:0369b09_11": "莫不以此為首務。",
    "X72n1435_032:0369b09_12": "初果鋤地。",
    "X72n1435_032:0369b10_13": "而蟲離四寸。",
    "X72n1435_032:0369b10_14": "道共戒也。",
    "X72n1435_032:0369b10_15": "聲聞入定。",
    "X72n1435_032:0369b10_16": "而刀杖變花。",
    "X72n1435_032:0369b10_17": "定共戒也。",
    "X72n1435_032:0369b11_18": "菩薩以自在力。",
    "X72n1435_032:0369b11_19": "現三塗為淨土。",
    "X72n1435_032:0369b11_20": "慈成力也。",
    "X72n1435_032:0369b11_21": "如來以佛眼。",
    "X72n1435_032:0369b12_22": "觀大地眾生。",
    "X72n1435_032:0369b12_23": "同成正覺。",
    "X72n1435_032:0369b12_24": "悲無礙也。",
    "X72n1435_032:0369b12_25": "好生之德。",
    "X72n1435_032:0369b13_26": "普涵於九界。",
    "X72n1435_032:0369b13_27": "放生之功。",
    "X72n1435_032:0369b13_28": "直圓於佛果。",
    "X72n1435_032:0369b13_29": "而世人每易視之者。",
    "X72n1435_032:0369b14_30": "良由同體之理不明故也。",
    "X72n1435_032:0369b14_31": "葢性為生理。",
    "X72n1435_032:0369b14_32": "識為生基。",
    "X72n1435_032:0369b15_33": "生機蘊於意地。",
    "X72n1435_032:0369b15_34": "生緣熾於六情。",
    "X72n1435_032:0369b15_35": "遍觀三界。",
    "X72n1435_032:0369b15_36": "無非受生之場。",
    "X72n1435_032:0369b16_37": "備閱六道。",
    "X72n1435_032:0369b16_38": "咸稟妄生之氣。",
    "X72n1435_032:0369b16_39": "達無性者。",
    "X72n1435_032:0369b16_40": "方了緣生。",
    "X72n1435_032:0369b17_41": "悟無生者。",
    "X72n1435_032:0369b17_42": "乃能護物。",
    "X72n1435_032:0369b17_43": "以無緣慈。",
    "X72n1435_032:0369b17_44": "運同體悲。",
    "X72n1435_032:0369b17_45": "能會萬物為自己。",
    "X72n1435_032:0369b18_46": "故拔苦與樂。",
    "X72n1435_032:0369b18_47": "根於心現於事。",
    "X72n1435_032:0369b18_48": "不期然而自然也。",
    "X72n1435_032:0369b19_49": "若未明斯致。",
    "X72n1435_032:0369b19_50": "形跡為礙。",
    "X72n1435_032:0369b19_51": "物我成敵。",
    "X72n1435_032:0369b19_52": "在彼既有必償之果。",
    "X72n1435_032:0369b20_53": "在我仍造必報之因。",
    "X72n1435_032:0369b20_54": "因果相詶。",
    "X72n1435_032:0369b20_55": "循環無際。",
    "X72n1435_032:0369b21_0": "苦口良藥。",
    "X72n1435_032:0369b21_1": "如水投石。",
    "X72n1435_032:0369b21_2": "則奈之何。",
    "X72n1435_032:0369b21_3": "然奔濤狂瀾。",
    "X72n1435_032:0369b21_4": "勿忘中流之砥。",
    "X72n1435_032:0369b22_5": "移山抒海。",
    "X72n1435_032:0369b22_6": "弗替初心之誠。",
    "X72n1435_032:0369b22_7": "難行能行。",
    "X72n1435_032:0369b22_8": "亦在當人之自奮耳。",
    "X72n1435_032:0369b23_9": "苟能斷殺業。",
    "X72n1435_032:0369b23_10": "除殺法。",
    "X72n1435_032:0369b23_11": "離滅殺因。",
    "X72n1435_032:0369b23_12": "忘殺機於根塵識界。",
    "X72n1435_032:0369b24_13": "盎生理於依正自他。",
    "X72n1435_032:0369b24_14": "則菩提涅槃。",
    "X72n1435_032:0369b24_15": "便可向放生一事中薦取。",
    "X72n1435_032:0369c01_16": "豈世間功德所能彷彿哉。",
    "X72n1435_032:0369c01_17": "自觀以之二禪者。",
    "X72n1435_032:0369c02_18": "率諸善友。",
    "X72n1435_032:0369c02_19": "創此社於報恩大剎。",
    "X72n1435_032:0369c02_20": "予為申明其義。",
    "X72n1435_032:0369c03_21": "以告同仁。",
    "X72n1435_032:0369c03_22": "俾能放所放咸契無生緣生之理。",
    "X72n1435_032:0369c04_0": "庶地獄可以頓空。",
    "X72n1435_032:0369c04_1": "佛性可以頓了。",
    "X72n1435_032:0369c04_2": "謂放生社。",
    "X72n1435_032:0369c04_3": "即寂滅場可也。",
    "X72n1435_032:0369c07_0": "無異禪師廣錄卷第三十二"
}