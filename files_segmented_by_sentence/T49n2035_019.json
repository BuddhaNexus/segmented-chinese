[
    {
        "source_sentence": "佛祖統紀卷第十九",
        "from": "T49n2035_019:0240a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋景定四明東湖沙門志磐撰",
        "from": "T49n2035_019:0240a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸師列傳第六之九",
        "from": "T49n2035_019:0240a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豁菴悟法師法嗣嘯巖文虎法師廣智下第八世閑林真法師法嗣法明師昶法師逸堂癸法師法嗣同菴允憲法師石坡元啟法師竹坡如約法師石屋正己法師可堂若參法師化翁師贊法師巨宗師岳法師不孤有鄰法師柏庭月法師法嗣香林清賜法師伊堂了圓法師石田妙慧法師半雲行儒法師此室大方法師虛中元真法師遁山士堯法師孤巖如啟法師寂菴文慧法師橾菴文節法師巽中道謙法師無謀善庭法師北林與俱法師石門士雲法師悅菴惠法師法嗣禪悅了彬法師寶化道英法師雲屋可止法師化翁正己法師大蓬了因法師茅屋了己法師竹溪志昌法師石㵎戒法師法嗣古泉正宗法師此卷三十二人本紀原文遺失佛祖統紀卷第十九終柏庭月法師法嗣柏庭月法師法嗣法師文節。",
        "from": "T49n2035_019:0240b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字通叟。",
        "from": "T49n2035_019:0240b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自號操庵。",
        "from": "T49n2035_019:0240b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明慈溪夏氏子。",
        "from": "T49n2035_019:0240b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世為大族百餘家。",
        "from": "T49n2035_019:0240b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行路者常聞讀書聲。",
        "from": "T49n2035_019:0240b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父諱歷年賢厚人□□□二時有住土山定講師者祖免。",
        "from": "T49n2035_019:0240b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親異其貌勸出家于邑之永明寺。",
        "from": "T49n2035_019:0240b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明年落髮。",
        "from": "T49n2035_019:0240b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七遊□□□□□遷悅庵皆山家之□峻者師與填自聰應無□□□□□未有所得。",
        "from": "T49n2035_019:0240b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇西山次教柏庭月法師。",
        "from": "T49n2035_019:0240b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大爐鞴煅煉學者。",
        "from": "T49n2035_019:0240b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師於是竪精進幢留十三載。",
        "from": "T49n2035_019:0240b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨赴上竺。",
        "from": "T49n2035_019:0240b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有謙慧應三師皆有大名。",
        "from": "T49n2035_019:0240b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師合而為四傑焉。",
        "from": "T49n2035_019:0240b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柏庭謂師曰。",
        "from": "T49n2035_019:0240b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝國汝國得吾之大全矣。",
        "from": "T49n2035_019:0240b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟至當一句作麼生。",
        "from": "T49n2035_019:0240b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師厲聲曰。",
        "from": "T49n2035_019:0240b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞎却頂門竅壼中別有春。",
        "from": "T49n2035_019:0240b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至此天上地下無一可見之形一無可翫之色矣。",
        "from": "T49n2035_019:0240b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柏庭九旬謝事眾散。",
        "from": "T49n2035_019:0240b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師獨留三夏。",
        "from": "T49n2035_019:0240b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至唱滅乃退。",
        "from": "T49n2035_019:0240b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年五十一。",
        "from": "T49n2035_019:0240b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始出世定海觀音寺。",
        "from": "T49n2035_019:0240b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四年住象山玉泉。",
        "from": "T49n2035_019:0240b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六年陞天竺集慶寺。",
        "from": "T49n2035_019:0240b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃理廟所剏在九里松度廟。",
        "from": "T49n2035_019:0240b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼志式念先訓適住持本法。",
        "from": "T49n2035_019:0240c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師求去九重獨斷以操庵補其處。",
        "from": "T49n2035_019:0240c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬眾駭伏。",
        "from": "T49n2035_019:0240c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十年間講鐘法鼓震動湖山。",
        "from": "T49n2035_019:0240c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方學者如水就下。",
        "from": "T49n2035_019:0240c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹規立範有典有則。",
        "from": "T49n2035_019:0240c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明南湖之歸有世忠寺。",
        "from": "T49n2035_019:0240c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在萬山中曰東吳好處。",
        "from": "T49n2035_019:0240c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾強起師主之。",
        "from": "T49n2035_019:0240c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至正壬午二月二十六日鳴鼓告眾拂龕書偈擲筆而逝。",
        "from": "T49n2035_019:0240c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽八十六臘七十三。",
        "from": "T49n2035_019:0240c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著述有指要會宗集英等。",
        "from": "T49n2035_019:0240c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書于度弟子覺初羿歸家山善慶庵全身窆焉。",
        "from": "T49n2035_019:0240c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得法者如吳之似蘭子華思治惟簡明之大東慧海法東等說金錍有半月偷閑解夢書。",
        "from": "T49n2035_019:0240c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又觀心觀佛偈曰。",
        "from": "T49n2035_019:0240c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春到上林渾似錦不須尋訪賣華翁之句。",
        "from": "T49n2035_019:0240c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徑山愚禪師嘆賞不已。",
        "from": "T49n2035_019:0240c13_3",
        "context_with_next_sentence": true
    }
]