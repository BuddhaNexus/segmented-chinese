[
    {
        "source_sentence": "佛說一切如來金剛三業最上祕",
        "from": "T18n0885_005:0494c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密大教王經卷第五",
        "from": "T18n0885_005:0494c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試鴻臚卿",
        "from": "T18n0885_005:0494c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手，　　菩薩摩訶薩，",
        "from": "T18n0885_005:0494c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上執金剛，　　三界最勝師，",
        "from": "T18n0885_005:0494c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復現大字相，　　金剛清淨法。",
        "from": "T18n0885_005:0494c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復出妙音聲，　　宣說如是法：",
        "from": "T18n0885_005:0494c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「金剛士相應，　　正覺金剛喜，",
        "from": "T18n0885_005:0494c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大佛菩提，　　歡喜持金剛；",
        "from": "T18n0885_005:0494c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛路左曩，　　持烏瑟膩沙。",
        "from": "T18n0885_005:0494c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上大忿怒，　　想佛金剛像；",
        "from": "T18n0885_005:0494c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明王最上法，　　觀想寶生尊；",
        "from": "T18n0885_005:0494c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明妃廣大法，　　想無量壽尊；",
        "from": "T18n0885_005:0494c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切明事業，　　想不空大智；",
        "from": "T18n0885_005:0494c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大明句，　　想金剛手尊。",
        "from": "T18n0885_005:0494c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有藥剎尼、　　大明及教法，",
        "from": "T18n0885_005:0494c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從焰鬘得迦，　　明王儀軌出，",
        "from": "T18n0885_005:0494c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切相應行，　　祕密大明等。",
        "from": "T18n0885_005:0494c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此名諸佛大金剛三昧。",
        "from": "T18n0885_005:0494c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復說成就法，　　建立曼拏羅，",
        "from": "T18n0885_005:0494c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修先行精熟，　　行人當作法。",
        "from": "T18n0885_005:0494c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手，　　諸法自在尊，",
        "from": "T18n0885_005:0494c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身、語、心成就，　　最上智金剛，",
        "from": "T18n0885_005:0495a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或山林聚落、　　或復寂靜處，",
        "from": "T18n0885_005:0495a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛定相應，　　依法而持誦。",
        "from": "T18n0885_005:0495a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手菩薩，　　大明行觀照，",
        "from": "T18n0885_005:0495a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令種種事業，　　隨願皆成就。",
        "from": "T18n0885_005:0495a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛法影像，　　蓮華部光明、",
        "from": "T18n0885_005:0495a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身語心金剛、　　三部大儀軌、",
        "from": "T18n0885_005:0495a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三身入寤法，　　決定皆成就。",
        "from": "T18n0885_005:0495a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有作法者，　　擇四種勝地，",
        "from": "T18n0885_005:0495a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅固而作法，　　得究竟成就。",
        "from": "T18n0885_005:0495a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手菩薩，　　最上等虛空，",
        "from": "T18n0885_005:0495a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有入寤法，　　及一切儀軌。",
        "from": "T18n0885_005:0495a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽字金剛手，　　賀字身金剛；",
        "from": "T18n0885_005:0495a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿字持法尊，　　此祕密明句；",
        "from": "T18n0885_005:0495a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酇字禁伏法，　　出大可怖雲。",
        "from": "T18n0885_005:0495a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名諸禁伏，　　祕密中最上。",
        "from": "T18n0885_005:0495a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作此法時，　　一切皆驚怖，",
        "from": "T18n0885_005:0495a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身起於虛空，　　一肘、二肘量，",
        "from": "T18n0885_005:0495a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或五、八、十二，　　如是肘量數，",
        "from": "T18n0885_005:0495a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋住於空中，　　迷悶大怖畏。",
        "from": "T18n0885_005:0495a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，金剛手菩薩摩訶薩——諸佛大祕密主清淨三身——又復宣說如是祕密調伏一切設咄嚕法：",
        "from": "T18n0885_005:0495a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若欲作調伏法者，行人當往尸陀林中取尸陀林炭。",
        "from": "T18n0885_005:0495a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其作法者，即須作那屹那相而用作法、或用尸陀林灰亦可作法，以大明加持一千八百遍，所有一切設咄嚕皆悉調伏，乃至三界亦能調伏。",
        "from": "T18n0885_005:0495a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又，法若用瞿滿娑、訶野滿娑、說那滿娑等物作三角曼拏羅，依法儀軌而作護摩，或用摩賀滿娑如前作法。",
        "from": "T18n0885_005:0495b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又，法或作火壇，燃葛吒迦而作護摩；",
        "from": "T18n0885_005:0495b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於江河岸造諸形像如芥子量，以葛吒迦而為護摩，或用芥子，及羅嚩拏、帶羅、尾沙馱覩囉如是等物同作護摩，或用阿悉帝祖囉拏及嚕地囉尾沙等同作護摩，或用芥子與諸物和合同作護摩。",
        "from": "T18n0885_005:0495b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如上所說諸護摩法，當依儀軌依法行步，若坐、若立，所有勢分及處所等依法而作，於剎那間決定成就，一切設咄嚕乃至大惡囉剎娑等而自調伏，或得隱身自在，諸佛菩薩亦不能見。",
        "from": "T18n0885_005:0495b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，宣說作護摩大明曰：",
        "from": "T18n0885_005:0495b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「那莫三滿多迦引野嚩引訖唧二合多嚩日囉二合引𧹞一句　唵引二　虎盧虎盧三　底瑟吒二合引底瑟吒二合引四　滿馱滿馱五　賀那賀那六　捺賀捺賀七　鉢左鉢左八　誐哩惹二合誐哩惹二合九　怛哩惹二合怛哩惹二合十　尾薩普二合引吒野尾薩普二合引吒野十一　薩哩嚩二合尾伽那二合尾那引野崗十二　摩賀引誐拏鉢底十三　𡁠尾多引怛迦囉引野吽引發吒半音十四「作護摩時誦此大明，以金剛身語心業堅固持誦，此即調伏一切魔眾最上法觀想金剛手菩薩現大忿怒相，此名金剛手大忿怒三昧。",
        "from": "T18n0885_005:0495b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，行人觀想諸佛遍滿虛空，於剎那間破壞諸惡，及想一切執金剛者、諸大菩薩遍滿虛空，破壞一切背佛三昧、住非族類諸惡眾生，乃至一切囉剎娑等，種種惡者皆悉怖畏而自調伏，住金剛三昧；",
        "from": "T18n0885_005:0495c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切諸惡鳥獸皆悉調伏，安住三昧；",
        "from": "T18n0885_005:0495c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切大惡忿怒薩哩波等現黑色相作大怖畏，以薩哩波而為食噉，此等決定而自調伏。",
        "from": "T18n0885_005:0495c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此名調伏諸魔最上難行三昧。",
        "from": "T18n0885_005:0495c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如是諸佛執金剛尊金剛堅固禪定相應心金剛法，亦名諸佛金剛大忿怒三昧。",
        "from": "T18n0885_005:0495c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，執金剛王金剛手菩薩摩訶薩——如虛空無相大寂默者，一切灌頂義成就正覺智金剛大士——作如是言：",
        "from": "T18n0885_005:0495c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「大哉自性本清淨，　　攝彼金剛最上乘，",
        "from": "T18n0885_005:0495c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從彼無生妙法中，　　出生諸佛一切法。",
        "from": "T18n0885_005:0495c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，宣說祕密金剛羯磨息除諸惡苦惱法。",
        "from": "T18n0885_005:0495c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸欲作法者，當取朅致迦或盎誐囉畫薩哩波相，其狀極惡，現黑光明，畫二舌相大惡忿怒。",
        "from": "T18n0885_005:0495c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是畫已，行人當想亢字，於中出現訶邏喝羅光明。",
        "from": "T18n0885_005:0495c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復想火焰色相，行人當誦大明加持，所有一切惡毒皆悉銷滅。",
        "from": "T18n0885_005:0495c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又復觀想紇哩字，即能召集三界所有種種出生一切惡毒、常所惱害世間眾生，行人依法以大明加持，於剎那間惡毒銷滅。",
        "from": "T18n0885_005:0495c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又復觀想唵字，作金剛視，所有一切曼努迦、沒哩室唧迦薩哩波等常出一切惡毒害眾生者皆悉句召，依法加持，所有惡毒皆悉銷滅，普令安住大智金剛，入彼虛空金剛曼拏羅。",
        "from": "T18n0885_005:0495c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名息諸惡毒金剛三昧。",
        "from": "T18n0885_005:0495c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又復觀想吽字，心成大金剛，現白色相，出光明雲，大光普照，猶如滿月清淨無垢，如實觀想四處相應，剎那安住；",
        "from": "T18n0885_005:0496a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二、第三如是觀想彼薩哩波滿虛空界，於剎那間惡毒銷散無所施作。",
        "from": "T18n0885_005:0496a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名息滅一切毒祕密心法。",
        "from": "T18n0885_005:0496a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又復觀想阿字成八葉大蓮華，於中想現五種光明，周匝遍滿如月光明，清淨無垢，平等變化，此即安住定心大祕密句最上祕密智。",
        "from": "T18n0885_005:0496a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「行人如法觀想已，即能銷除諸惡病苦，所謂巘拏、必吒迦、盧多等、及餘諸病皆悉銷除，令諸世間遠離苦惱。",
        "from": "T18n0885_005:0496a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，宣說息除內外諸病執金剛心祕密三部心最上大明句：",
        "from": "T18n0885_005:0496a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引一句　𡁠那𡁠俱半音二「唵引一句　阿路力俱半音二「唵引一句　嚩日囉二合特哩二合俱半音二「此大明句能成一切義、能除一切苦，若有行人依法儀軌專注一心，如實觀想眾類影像，或嚩那囉相、或說那相，以自身語心業安住金剛輪，作金剛步，以自身語心平等觀想。",
        "from": "T18n0885_005:0496a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀成就已，即得諸佛菩薩廣大敬愛，住加持句，施歡喜心，於自金剛身語心業想諸佛雲及金剛王廣大勝雲，破諸病苦令得解脫。",
        "from": "T18n0885_005:0496a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛金剛大士想現忿怒，破諸魔惡，與諸定心相應羯磨出生平等正念，如前大明。",
        "from": "T18n0885_005:0496a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能相應持誦一百八遍，於七日中一切成就，所有自心大明儀軌亦復成就，此明銷除一切病苦難行三昧。",
        "from": "T18n0885_005:0496a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手，　　光明大智鉤，",
        "from": "T18n0885_005:0496a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲解脫金剛，　　說一切夢相：",
        "from": "T18n0885_005:0496a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「夢所見諸法，　　即無生自性，",
        "from": "T18n0885_005:0496a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性淨真實，　　即金剛自性。",
        "from": "T18n0885_005:0496b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　求成就行人，",
        "from": "T18n0885_005:0496b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作持誦相、　　或入禪定法，",
        "from": "T18n0885_005:0496b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得佛菩薩，　　現身在其前。",
        "from": "T18n0885_005:0496b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此名大夢三昧。",
        "from": "T18n0885_005:0496b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若夢中得見，　　諸佛妙光明，",
        "from": "T18n0885_005:0496b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得最上菩提，　　成就一切智，",
        "from": "T18n0885_005:0496b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當見報身佛，　　出現在其前。",
        "from": "T18n0885_005:0496b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　三界尊大士，",
        "from": "T18n0885_005:0496b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作諸供養等，　　當決定成就，",
        "from": "T18n0885_005:0496b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛及菩薩，　　五種妙樂法。",
        "from": "T18n0885_005:0496b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　供養諸尊像，",
        "from": "T18n0885_005:0496b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及金剛薩埵、　　大祕密主像，",
        "from": "T18n0885_005:0496b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得平等智，　　金剛法大愛。",
        "from": "T18n0885_005:0496b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　自身諸相分，",
        "from": "T18n0885_005:0496b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得祕密金剛，　　最上大明稱。",
        "from": "T18n0885_005:0496b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　禮敬諸如來，",
        "from": "T18n0885_005:0496b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸大菩薩，　　得金剛堅固。",
        "from": "T18n0885_005:0496b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　一切乾𭔞眾，",
        "from": "T18n0885_005:0496b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸分皆圓滿，　　種種妙莊嚴，",
        "from": "T18n0885_005:0496b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及童子、童女，　　具相好莊嚴，",
        "from": "T18n0885_005:0496b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見此等相者，　　得所作成就。",
        "from": "T18n0885_005:0496b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　十方一切佛，",
        "from": "T18n0885_005:0496b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住佛剎中，　　當得諸如來，",
        "from": "T18n0885_005:0496b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施以歡喜心，　　圓滿妙法藏。",
        "from": "T18n0885_005:0496b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　諸佛轉法輪，",
        "from": "T18n0885_005:0496b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及見諸如來，　　入般涅槃相，",
        "from": "T18n0885_005:0496b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得三昧相應，　　安住定金剛。",
        "from": "T18n0885_005:0496b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　諸妙好園林，",
        "from": "T18n0885_005:0496b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及見諸乾𭔞，　　莊嚴而遊戲，",
        "from": "T18n0885_005:0496c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得禪定三昧，　　諸佛所加持。",
        "from": "T18n0885_005:0496c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　諸佛及菩薩，",
        "from": "T18n0885_005:0496c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施諸灌頂相、　　及作供養事，",
        "from": "T18n0885_005:0496c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當成就祕密，　　最上持明王。",
        "from": "T18n0885_005:0496c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夢中得見，　　贊拏羅說那，",
        "from": "T18n0885_005:0496c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得金剛手，　　成就心無住。",
        "from": "T18n0885_005:0496c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種夢，　　金剛所出生，",
        "from": "T18n0885_005:0496c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼最上成就，　　金剛身語心。",
        "from": "T18n0885_005:0496c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸夢想行，　　從自心所生，",
        "from": "T18n0885_005:0496c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若心住於定，　　即諸法安住；",
        "from": "T18n0885_005:0496c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法安住故，　　諸法等虛空，",
        "from": "T18n0885_005:0496c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無法、無法性，　　即入三昧心。",
        "from": "T18n0885_005:0496c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，會中一切如來聞金剛手菩薩如是宣說，歎未曾有，以諸佛三業咸各稱讚，作是問言：",
        "from": "T18n0885_005:0496c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何夢想從自心生？",
        "from": "T18n0885_005:0496c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何自性及諸法性諸法實義如虛空性？",
        "from": "T18n0885_005:0496c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，世尊大毘盧遮那如來即以金剛三業向諸如來作如是言：",
        "from": "T18n0885_005:0496c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸佛世尊當知：",
        "from": "T18n0885_005:0496c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空與一切法，非和合、非不和合，虛空無所行，一切所向及一切處無所出現。",
        "from": "T18n0885_005:0496c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸如來當知：",
        "from": "T18n0885_005:0496c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸夢想法亦復如是，即彼一切法皆從夢中平等出生。",
        "from": "T18n0885_005:0496c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛世尊，一切如來亦同諸法，皆從夢中平等出生，隨順安住。",
        "from": "T18n0885_005:0496c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸如來當知：",
        "from": "T18n0885_005:0496c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空無色相、亦無所出現，無對復無礙，彼一切法離相無礙亦復如是。",
        "from": "T18n0885_005:0496c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又復當知：",
        "from": "T18n0885_005:0496c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來所有一切法、身語心金剛三昧等，於一切處純一自性隨順而轉——所謂自心自性無所動轉——若身語心住金剛界，即與虛空界無二平等。",
        "from": "T18n0885_005:0497a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸佛如來安住虛空界，所有一切眾生於虛空界亦如是住，不住欲界、不住色界、不住無色界。",
        "from": "T18n0885_005:0497a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若法三界無所住，諸佛如來無所生，是故當知：",
        "from": "T18n0885_005:0497a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切法無有自性。",
        "from": "T18n0885_005:0497a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸佛如來又復當知：",
        "from": "T18n0885_005:0497a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有菩提心從諸如來智所出生，即彼菩提心不於身住、不於語住、不於心住，是故菩提心一切無所住。",
        "from": "T18n0885_005:0497a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心無住故，諸法何所住？",
        "from": "T18n0885_005:0497a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法無住故，一切無所生。",
        "from": "T18n0885_005:0497a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如是故，一切如來正智出生大金剛句。",
        "from": "T18n0885_005:0497a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸佛如來又復當知：",
        "from": "T18n0885_005:0497a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼夢想法於三界中無所出現、無所行、無所得、無有實，非士夫等相、非自他所見，是故三界所作一切如夢，如夢所見、如夢出生；",
        "from": "T18n0885_005:0497a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍十方一切世界所有諸佛及諸菩薩，乃至一切有情亦復如是，一切如夢，無我相可得，當如是住。",
        "from": "T18n0885_005:0497a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸佛如來又復當知：",
        "from": "T18n0885_005:0497a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如大摩尼寶具諸功德，於眾寶中而為最上，隨諸眾生有所希求，若金、若銀及餘寶等，應所求心即能出現。",
        "from": "T18n0885_005:0497a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知彼諸寶等不從心住、不從摩尼寶住，一切如來、一切法、一切佛法亦復如是，諸有智者當如是知。",
        "from": "T18n0885_005:0497a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，一切如來聞世尊大毘盧遮那金剛如來說是法已，生大歡喜，作熙怡眼，瞻察世尊大毘盧遮那金剛如來，作如是言：",
        "from": "T18n0885_005:0497a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「希有，世尊！",
        "from": "T18n0885_005:0497a24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若虛空界平等安住，彼一切法及諸佛法亦復如是平等安住。",
        "from": "T18n0885_005:0497a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是時會中所有一切如來及諸菩薩咸作是言：",
        "from": "T18n0885_005:0497a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「世尊大毘盧遮那金剛如來！",
        "from": "T18n0885_005:0497a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願宣說一切大明及金剛一切成就等法，即此一切大明及金剛一切成就等法當於何住？",
        "from": "T18n0885_005:0497b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，執金剛者大毘盧遮那金剛如來讚言：",
        "from": "T18n0885_005:0497b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉，善哉。",
        "from": "T18n0885_005:0497b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩能問此義。",
        "from": "T18n0885_005:0497b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大士當知：",
        "from": "T18n0885_005:0497b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大明及一切金剛成就當於金剛身、語、心住。",
        "from": "T18n0885_005:0497b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T18n0885_005:0497b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸大明及諸金剛成就、乃至一切佛法皆於自身、語、心住。",
        "from": "T18n0885_005:0497b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼身語心金剛三業不住欲界、不住色界、不住無色界，不住心身、不住身心，不住語心、不住心語，由是三業無所住故，彼一切法亦無所住。",
        "from": "T18n0885_005:0497b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如虛空自性清淨，諸法亦然。",
        "from": "T18n0885_005:0497b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是時諸佛及諸菩薩復作是言：",
        "from": "T18n0885_005:0497b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「一切如來當於何住？",
        "from": "T18n0885_005:0497b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從何出生？",
        "from": "T18n0885_005:0497b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」毘盧遮那佛言：",
        "from": "T18n0885_005:0497b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸大士！",
        "from": "T18n0885_005:0497b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來於自身、語、心住，從自身、語、心出生。",
        "from": "T18n0885_005:0497b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」諸佛又問：",
        "from": "T18n0885_005:0497b12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「心於何住？",
        "from": "T18n0885_005:0497b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答曰：",
        "from": "T18n0885_005:0497b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如虛空住。",
        "from": "T18n0885_005:0497b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又問：",
        "from": "T18n0885_005:0497b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「虛空何住？",
        "from": "T18n0885_005:0497b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」答曰：",
        "from": "T18n0885_005:0497b13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「虛空無所住。",
        "from": "T18n0885_005:0497b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是時諸佛及諸菩薩生希有心，作是讚言：",
        "from": "T18n0885_005:0497b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉！",
        "from": "T18n0885_005:0497b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善說自心法性諸行寂靜。",
        "from": "T18n0885_005:0497b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」作是言已，默然而住。",
        "from": "T18n0885_005:0497b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "16 一切曼拏羅成就金剛現證菩提分一切如來金剛三業最上甚深祕密中祕密諸佛大集會一切曼拏羅成就金剛現證菩提分第十六爾時，一切如來又復雲集。",
        "from": "T18n0885_005:0497b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸如來即以金剛三業勸請世尊大毘盧遮那如來宣說甚深祕密法門，即時變化種種珍寶、妙莊嚴具供養世尊。",
        "from": "T18n0885_005:0497b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時，世尊大毘盧遮那金剛如來即入金剛大曼拏羅無畏三昧王莊嚴金剛三摩地。",
        "from": "T18n0885_005:0497b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還從金剛身曼拏羅一切如來身語心金剛出已，作如是言：",
        "from": "T18n0885_005:0497b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次今宣說，　　身大曼拏羅，",
        "from": "T18n0885_005:0497b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛心所生，　　勝諸曼拏羅。",
        "from": "T18n0885_005:0497b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其量十六肘，　　其相作四方，",
        "from": "T18n0885_005:0497c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曼拏羅諸佛，　　安住金剛身。",
        "from": "T18n0885_005:0497c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇中畫大輪，　　尾提金剛相，",
        "from": "T18n0885_005:0497c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作金剛印法，　　勝祕密大明，",
        "from": "T18n0885_005:0497c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪中畫毘盧，　　及阿閦佛等；",
        "from": "T18n0885_005:0497c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其壇四隅，　　畫本部賢聖；",
        "from": "T18n0885_005:0497c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復於壇門，　　畫忿怒明王；",
        "from": "T18n0885_005:0497c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此依法畫已，　　即成曼拏羅。",
        "from": "T18n0885_005:0497c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當依法，　　想祕密金剛，",
        "from": "T18n0885_005:0497c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦本大明，　　作諸供養事，",
        "from": "T18n0885_005:0497c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即祕密中，　　難行三昧行。",
        "from": "T18n0885_005:0497c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此名一切祕密大明三昧一切如來身金剛曼拏羅。",
        "from": "T18n0885_005:0497c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是時，世尊復入一切語三昧金剛雲莊嚴三摩地。",
        "from": "T18n0885_005:0497c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從定出已，以金剛三業宣說金剛語曼拏羅：",
        "from": "T18n0885_005:0497c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次今當說，　　語業曼拏羅，",
        "from": "T18n0885_005:0497c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛心出生，　　勝諸曼拏羅。",
        "from": "T18n0885_005:0497c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其量二十肘，　　四方與四隅，",
        "from": "T18n0885_005:0497c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四門而具足，　　金剛線絣量。",
        "from": "T18n0885_005:0497c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語曼拏羅句，　　金剛功德聚，",
        "from": "T18n0885_005:0497c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛大法王，　　出生諸大明。",
        "from": "T18n0885_005:0497c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其曼拏羅，　　中心畫大輪，",
        "from": "T18n0885_005:0497c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切印相，　　依儀軌而畫。",
        "from": "T18n0885_005:0497c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大輪中心，　　畫無量壽印，",
        "from": "T18n0885_005:0497c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即金剛句，　　作勝曼拏羅。",
        "from": "T18n0885_005:0497c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如儀軌所作，　　勿令有破壞，",
        "from": "T18n0885_005:0497c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻祕密供養，　　得金剛歡喜。",
        "from": "T18n0885_005:0497c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼甘露三昧，　　作供養成就，",
        "from": "T18n0885_005:0497c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即名諸佛，　　難行三昧行。",
        "from": "T18n0885_005:0498a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此名一切如來金剛語曼拏羅。",
        "from": "T18n0885_005:0498a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是時，世尊復入普雲金剛三摩地。",
        "from": "T18n0885_005:0498a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從定出已，以金剛三業宣說最上祕密中祕密心曼拏羅：",
        "from": "T18n0885_005:0498a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「當畫曼拏羅，　　中畫金剛手，",
        "from": "T18n0885_005:0498a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依本部儀軌，　　祕密三業生。",
        "from": "T18n0885_005:0498a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此名一切如來身語心祕密金剛智句最上甚深祕密中祕密出生心曼拏羅。",
        "from": "T18n0885_005:0498a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，世尊復入一切如來一切曼拏羅出生輪莊嚴三摩地。",
        "from": "T18n0885_005:0498a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從定出已，以金剛三業宣說一切祕密曼拏羅法，及彼一切金剛曼拏羅印相、一切大明心祕密等法：",
        "from": "T18n0885_005:0498a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「今說曼拏羅絣線大明曰：",
        "from": "T18n0885_005:0498a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「吽引唵引阿莎引賀引一句「絣金剛線布五色粉時，當誦此大明，依法儀軌如理所作，速得成就諸佛菩提。",
        "from": "T18n0885_005:0498a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從彼三昧儀軌出生賢聖大明住加持句、大曼拏羅勝法儀軌、毘盧遮那大主宰出生佛眼菩薩住身曼拏羅句、身金剛功德金剛法主宰出生自影像，此即一切大明中最上祕密，常住金剛薩埵大主宰出生，摩摩枳菩薩一切大明皆從最上祕密出生。",
        "from": "T18n0885_005:0498a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是，曼拏羅所用諸物皆悉具足，安住最上祕密，此即金剛大祕密最上希有忿怒王句召。",
        "from": "T18n0885_005:0498a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「獻諸佛供養三時所作，供養三金剛無住，與彼三金剛相應即得大明，成就所有一切大明。",
        "from": "T18n0885_005:0498a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻出生食施諸部多，五種甘露自心所生，如是三昧最勝無比，速能圓滿諸佛菩提。",
        "from": "T18n0885_005:0498a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若欲絣線作曼拏羅，當如是作：",
        "from": "T18n0885_005:0498b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當絣線時，觀想毘盧遮那及想金剛手菩薩金剛甘露等法金剛大光明，觀想一切佛所有羯磨法，想彼金剛線是即五佛，乃名諸佛最上祕密未曾有。",
        "from": "T18n0885_005:0498b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「當知所用粉有二十五種，如儀軌說。",
        "from": "T18n0885_005:0498b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切大明，當想金剛手菩薩，即得諸佛祕密最上菩提身語心三昧。",
        "from": "T18n0885_005:0498b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想於五處如是所作具足，即得三金剛不壞金剛所生，如金剛手菩薩所作一切驚怖，所有羂索及金剛鉤，乃至一切金剛大明教法，皆從金剛手菩薩堅固正慧三摩地出生。",
        "from": "T18n0885_005:0498b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有作護摩法及彼大明、乃至護摩所用物等作囉虎頂，並如儀軌所作，於二處平等相應，作護摩八百遍，即得三種金剛不壞，此名諸佛護摩難行三昧行。",
        "from": "T18n0885_005:0498b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如前所說，是即大曼拏羅絣線法，所有絣線分量如儀軌說。",
        "from": "T18n0885_005:0498b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既絣線已，作金剛界成曼拏羅，於曼拏羅中依法儀軌置本尊毘盧遮那佛像及諸賢聖等，復於壇中依其方位置五賢瓶。",
        "from": "T18n0885_005:0498b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作曼拏羅已，然後金剛阿闍梨依法儀軌攝受弟子。",
        "from": "T18n0885_005:0498b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既攝受已，依法教授，作如是言：",
        "from": "T18n0885_005:0498b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝當安住金剛三業，金剛薩埵加持身、語、心。",
        "from": "T18n0885_005:0498b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』然後引弟子入曼拏羅。",
        "from": "T18n0885_005:0498b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當入曼拏羅時，誦此大明曰：",
        "from": "T18n0885_005:0498b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「阿一句　亢尾引囉吽引二「此名一切三昧身語心金剛大明。",
        "from": "T18n0885_005:0498b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「入曼拏羅已，當授金剛大灌頂祕密智法，當想諸佛滿虛空界，以妙香等而為供養，復以妙音歌詠讚歎，觀想大三昧雲遍滿金剛大曼拏羅，安住三金剛三昧。",
        "from": "T18n0885_005:0498b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後金剛阿闍梨以白芥子擲弟子身。",
        "from": "T18n0885_005:0498c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲已，當取賢瓶授與灌頂。",
        "from": "T18n0885_005:0498c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是時弟子受灌頂時，當想金剛薩埵。",
        "from": "T18n0885_005:0498c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得灌頂已，安住最上三昧，常住毘盧遮那堅固心法，諸有所作隨順正智，修習金剛身語心業，歸命三界一切賢聖，所有阿闍梨一切語言如教奉行，彼一切祕密灌頂法如理修習，此即一切如來三密金剛出生正法、授諸弟子大金剛義、種種祕密菩提金剛、諸佛所授廣大三昧。",
        "from": "T18n0885_005:0498c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「時彼弟子受灌頂已，當發最上大歡喜心，所有一切賢聖影像住相應心，阿闍梨然可指示大曼拏羅法，授與大明文字祕密句等。",
        "from": "T18n0885_005:0498c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說三昧誓，作如是言：",
        "from": "T18n0885_005:0498c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「『彼殺、盜、婬、妄，　　諸染法自性，",
        "from": "T18n0885_005:0498c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住佛三昧者，　　如實當了知。",
        "from": "T18n0885_005:0498c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「此名諸佛最上三昧常住法，令諸眾生安住金剛相應，如理宣說一切大明句、一切三摩地法、祕密大明王儀軌及餘祕密甘露法。",
        "from": "T18n0885_005:0498c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有行人依法作者，無上菩提而不難得。",
        "from": "T18n0885_005:0498c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「當知四聖大祕密法是即一切祕密金剛，現女人色相，安住大輪三昧，為諸眾生起利益行，宣布一切金剛曼拏羅大明祕密儀軌。",
        "from": "T18n0885_005:0498c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼五種飲食依法而食，如是即得一切大明成就。",
        "from": "T18n0885_005:0498c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是時阿闍梨作是說已，又復為其弟子宣示大曼拏羅祕密行相、宣說金剛祕密句，即時口誦唵字，是即一切大明根本，於剎那間光明熾盛普照一切，此名諸佛大持明士祕密大明、亦即一切成就大三昧、亦即諸佛菩薩成就勝行、亦即安怛陀那大力精進金剛句召最上成就曼拏羅中一切金剛事業。",
        "from": "T18n0885_005:0498c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「住空想金剛，　　紇哩字光明，",
        "from": "T18n0885_005:0499a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀想諸佛，　　遍滿虛空界，",
        "from": "T18n0885_005:0499a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有身、語、心，　　與大明相應。",
        "from": "T18n0885_005:0499a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此即身語心大明金剛加持祕密句。",
        "from": "T18n0885_005:0499a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「阿亢朅所謂：",
        "from": "T18n0885_005:0499a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「金剛手影像，　　蓮華手大光，",
        "from": "T18n0885_005:0499a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能勝影像，　　安住祕密句。",
        "from": "T18n0885_005:0499a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此即大金剛祕密句。",
        "from": "T18n0885_005:0499a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「日輪曼拏羅，　　中現阿閦尊；",
        "from": "T18n0885_005:0499a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛大輪，　　現毘盧遮那；",
        "from": "T18n0885_005:0499a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於大輪中，　　復現無量壽。",
        "from": "T18n0885_005:0499a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸祕密心，　　一切祕密義，",
        "from": "T18n0885_005:0499a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出現大光明，　　照一切極苦。",
        "from": "T18n0885_005:0499a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此即一切金剛祕密心。",
        "from": "T18n0885_005:0499a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「阿字金剛杵、　　及眾金剛鉤，",
        "from": "T18n0885_005:0499a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切儀軌，　　佛菩提成就。",
        "from": "T18n0885_005:0499a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有修法者，　　詣山林曠野，",
        "from": "T18n0885_005:0499a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘勝方所，　　依法而修習，",
        "from": "T18n0885_005:0499a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼於半月中，　　得成就佛性。",
        "from": "T18n0885_005:0499a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼三十六百，　　如須彌山量，",
        "from": "T18n0885_005:0499a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "碎微塵等數，　　一切諸會眾，",
        "from": "T18n0885_005:0499a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切皆得，　　成菩提金剛。",
        "from": "T18n0885_005:0499a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此即諸佛金剛大笑三昧。",
        "from": "T18n0885_005:0499a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「金剛手大智，　　持大語金剛，",
        "from": "T18n0885_005:0499a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身金剛大相，　　說緊迦囉法。",
        "from": "T18n0885_005:0499a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此即金剛智輪四種大明——所謂三昧句、三昧語言、三昧愛、三昧拳等。",
        "from": "T18n0885_005:0499a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「虛空廣清淨，　　遠離一切法，",
        "from": "T18n0885_005:0499a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現圓滿妙相，　　金剛未曾有。",
        "from": "T18n0885_005:0499a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切佛，　　普觀諸眾生，",
        "from": "T18n0885_005:0499b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等如一子，　　諸佛所攝持。",
        "from": "T18n0885_005:0499b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手愛樂，　　廣大祕密心，",
        "from": "T18n0885_005:0499b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令住三金剛，　　大執金剛者。",
        "from": "T18n0885_005:0499b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住空而觀想，　　大力妙金剛，",
        "from": "T18n0885_005:0499b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴妙寶冠，　　五嚩拏相應，",
        "from": "T18n0885_005:0499b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼五處大明，　　大金剛忿怒。",
        "from": "T18n0885_005:0499b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若愚、若智者，　　依法而觀想，",
        "from": "T18n0885_005:0499b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼於半月中，　　得祕密成就，",
        "from": "T18n0885_005:0499b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸祕密金剛，　　金剛歌大義。",
        "from": "T18n0885_005:0499b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住空而觀想，　　佛大曼拏羅，",
        "from": "T18n0885_005:0499b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽字金剛明，　　想三金剛等。",
        "from": "T18n0885_005:0499b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵字想於眼，　　能觀見一切，",
        "from": "T18n0885_005:0499b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及見諸佛相，　　三身勝金剛。",
        "from": "T18n0885_005:0499b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有饑渴等，　　為世間大苦，",
        "from": "T18n0885_005:0499b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修習瑜伽者，　　彼不生思念。",
        "from": "T18n0885_005:0499b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離一切苦，　　成就心金剛，",
        "from": "T18n0885_005:0499b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧尊影像，　　一切義正句。",
        "from": "T18n0885_005:0499b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩字金剛口、　　唵字金剛眼，",
        "from": "T18n0885_005:0499b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼唵、鑁二字，　　安住金剛舌。",
        "from": "T18n0885_005:0499b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切處無住，　　離諸苦寂靜，",
        "from": "T18n0885_005:0499b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想智金剛光，　　即如意妙寶，",
        "from": "T18n0885_005:0499b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨眾生意願，　　一切所嚴飾。",
        "from": "T18n0885_005:0499b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此名諸佛如意寶金剛。",
        "from": "T18n0885_005:0499b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說一切如來金剛三業最上祕密大教王經卷第五",
        "from": "T18n0885_005:0499b26_100",
        "context_with_next_sentence": false
    }
]