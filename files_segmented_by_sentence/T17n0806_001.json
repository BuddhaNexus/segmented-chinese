[
    {
        "source_sentence": "佛說枯樹經一卷",
        "from": "T17n0806_001:0751a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧伽尼城北，迦葉佛時偷婆，陷在下方金剛",
        "from": "T17n0806_001:0751a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "際。佛從天上為母說法，還於此城下。阿難問",
        "from": "T17n0806_001:0751a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛：",
        "from": "T17n0806_001:0751a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛從天下，以何為幟？",
        "from": "T17n0806_001:0751a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0806_001:0751a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「今當現證。",
        "from": "T17n0806_001:0751a22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」即申手下方，執迦葉佛偷婆出。",
        "from": "T17n0806_001:0751a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此偷婆以雜色玉石作，偷婆名僧伽尸，迦葉佛父名，說立婆留言慈造，高三百肘、方三里半，本真七寶合，故有七種色，現城即以此偷婆為稱也。",
        "from": "T17n0806_001:0751a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉、阿難等所以於此地集經者，有二事不得涅槃處出：",
        "from": "T17n0806_001:0751a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、不在人中；",
        "from": "T17n0806_001:0751a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、天人四輩來者，皆當悲感心亂，不靖聽故也。",
        "from": "T17n0806_001:0751a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集訖，諸王於其處，造僧伽藍，名諸王寺，在偷婆北。",
        "from": "T17n0806_001:0751b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後群茶王，慊偷婆當城門，王欲壞之，勅城內嚴銚䤺，明當除之。",
        "from": "T17n0806_001:0751b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜半偷婆便移，從城上過，音聲振國，去城南二十里，在林樹間止。",
        "from": "T17n0806_001:0751b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所勸王破寺臣者，即誅五族。",
        "from": "T17n0806_001:0751b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王覩變知改，為清信士。",
        "from": "T17n0806_001:0751b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自移來，可四十年許。",
        "from": "T17n0806_001:0751b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸王寺朽壞，後有橫王出，更修飾之，今日現在。",
        "from": "T17n0806_001:0751b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說枯樹經",
        "from": "T17n0806_001:0751b08_100",
        "context_with_next_sentence": false
    }
]