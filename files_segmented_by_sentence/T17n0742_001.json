[
    {
        "source_sentence": "佛說自愛經",
        "from": "T17n0742_001:0548c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東晉天竺三藏竺曇無蘭譯",
        "from": "T17n0742_001:0548c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞如是：一時佛在舍衛國祇樹給孤獨園。時",
        "from": "T17n0742_001:0548c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國王詣佛所，遙見精舍，下車却蓋，解劍脫履，拱手直進，五體投地，稽首足下，却長跪白：",
        "from": "T17n0742_001:0548c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「願以來日於四街道請佛及僧，施設微食！",
        "from": "T17n0742_001:0548c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令愚民知佛至尊，覩其儀式，傳世為則。",
        "from": "T17n0742_001:0548c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願使眾生遠鬼妖蠱，悉奉五戒，以消國患！",
        "from": "T17n0742_001:0548c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊曰：",
        "from": "T17n0742_001:0548c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉，善哉！",
        "from": "T17n0742_001:0548c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫為國王，宜有明導，率民以道，請求來福。",
        "from": "T17n0742_001:0548c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾昔為王，亦奉諸佛、沙門、梵志，常行四等、六度，勤以致佛，巍巍無上。",
        "from": "T17n0742_001:0548c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」王曰：",
        "from": "T17n0742_001:0548c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「至真！",
        "from": "T17n0742_001:0548c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠如佛教，夫不種核無緣獲其果。",
        "from": "T17n0742_001:0548c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾受佛恩生世為人，去女即男，六情完具，景福之會值佛處世，盛明法化在於吾國，積善難量。",
        "from": "T17n0742_001:0548c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞退，嚴辦。",
        "from": "T17n0742_001:0548c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊曰：",
        "from": "T17n0742_001:0548c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉，善哉！",
        "from": "T17n0742_001:0548c18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」王即還宮，平治大道，高下齊平；",
        "from": "T17n0742_001:0548c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣設帳幔，竪諸幢幡。",
        "from": "T17n0742_001:0548c19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自彼四衢至精舍門，挾道欄楯，羅燈如星，步有香爐；",
        "from": "T17n0742_001:0548c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天樂眾伎，歌佛至尊之靈，諮嗟沙門清貞之德；",
        "from": "T17n0742_001:0549a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散華雜寶，紛紛如雨，香湯灑地，却敷綩綖。",
        "from": "T17n0742_001:0549a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王親通夜手自為饌，身往奉迎，稽首于地，長跪曰：",
        "from": "T17n0742_001:0549a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「願世尊垂大慈，現影則濟眾生！",
        "from": "T17n0742_001:0549a03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛起著法服，與諸沙門俱之四衢。",
        "from": "T17n0742_001:0549a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王及群臣翼從左右，佛至就座。",
        "from": "T17n0742_001:0549a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫人、太子皆稽首于地，攘衣跣𮧬。",
        "from": "T17n0742_001:0549a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行澡水已，手自斟酌。",
        "from": "T17n0742_001:0549a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛飯畢，稽首曰：",
        "from": "T17n0742_001:0549a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「今設微食，願天人、鬼、龍、蜎蜚、蚑行、蠕動之類，令世世逢佛、逢法、逢沙門眾，去世穢臊，懷佛正真。",
        "from": "T17n0742_001:0549a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0742_001:0549a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉！",
        "from": "T17n0742_001:0549a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王為民父母，潤之以慈，導以大明，所願必得！",
        "from": "T17n0742_001:0549a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」王曰：",
        "from": "T17n0742_001:0549a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「普地之民，當別之際，咸曰自愛。",
        "from": "T17n0742_001:0549a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自愛之義，其有要乎？",
        "from": "T17n0742_001:0549a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊歎曰：",
        "from": "T17n0742_001:0549a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉問也！",
        "from": "T17n0742_001:0549a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫人處世，心懷毒念，口施毒言，身行毒業，斯三事出于心、身、口，唱成其惡，以加眾生。",
        "from": "T17n0742_001:0549a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生被毒，即結怨恨，誓心欲報，或現世獲；",
        "from": "T17n0742_001:0549a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或身終後，魂靈昇天，即下報之。",
        "from": "T17n0742_001:0549a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中、畜生、鬼、神、太山，更相剋賊，皆由宿命，非空生也。",
        "from": "T17n0742_001:0549a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身三、口四、意三無惡，愚者恣之，不孝其親；",
        "from": "T17n0742_001:0549a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬奉鬼妖，婬亂酒悖，就下賤之濁，以致危身滅族之禍，死入太山湯火之酷，長不獲人身，去佛遠正，不樂沙門之清戒，常與愚會。",
        "from": "T17n0742_001:0549a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯謂樂危亡之禍，不自愛者也！",
        "from": "T17n0742_001:0549a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」王曰：",
        "from": "T17n0742_001:0549a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善，善唯佛教誡！",
        "from": "T17n0742_001:0549a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願聞自愛其則云何？",
        "from": "T17n0742_001:0549a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0742_001:0549a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「自愛之法，先三自歸，以法養親，慈愛人物，悲愍愚惑，見正喜進，平等普護，安濟眾生，施斯四恩，布施窮乏；",
        "from": "T17n0742_001:0549a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生無怨，諸天祐育，眾橫不加，牢獄、利劍、諸毒消歇，親安族興，生無災患，死得上天，常與明會。",
        "from": "T17n0742_001:0549a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯謂自愛者也！",
        "from": "T17n0742_001:0549a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」王曰：",
        "from": "T17n0742_001:0549a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉！",
        "from": "T17n0742_001:0549a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛教誡！",
        "from": "T17n0742_001:0549a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「誠高行賢者，清貞守真；",
        "from": "T17n0742_001:0549a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穢利、邪樂不以染心；",
        "from": "T17n0742_001:0549a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口四不言，三凶遠身；",
        "from": "T17n0742_001:0549b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "危命全行，諸佛所珍；",
        "from": "T17n0742_001:0549b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親安族興，終得上天；",
        "from": "T17n0742_001:0549b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得福會。",
        "from": "T17n0742_001:0549b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯謂自愛者也！",
        "from": "T17n0742_001:0549b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」王曰：",
        "from": "T17n0742_001:0549b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉！",
        "from": "T17n0742_001:0549b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛教真！",
        "from": "T17n0742_001:0549b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「眾毒橫加，忍默不說；",
        "from": "T17n0742_001:0549b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈惻愍彼，終始濟之；",
        "from": "T17n0742_001:0549b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進不怠，紹心三尊；",
        "from": "T17n0742_001:0549b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外靜內寂，殖念道根；",
        "from": "T17n0742_001:0549b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深觀聖趣，明化真言；",
        "from": "T17n0742_001:0549b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝親濟已，導眾使然；",
        "from": "T17n0742_001:0549b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與福會。",
        "from": "T17n0742_001:0549b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯謂自愛者也！",
        "from": "T17n0742_001:0549b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」王曰：",
        "from": "T17n0742_001:0549b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉！",
        "from": "T17n0742_001:0549b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛教真！",
        "from": "T17n0742_001:0549b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」觀者無數，時有兩商人，一人念曰：",
        "from": "T17n0742_001:0549b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛身丈六，華色紫金，頂有肉髻，項有日光，巍巍難言。",
        "from": "T17n0742_001:0549b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛如帝王，沙門猶忠臣。",
        "from": "T17n0742_001:0549b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛陳明法，沙門誦宣。",
        "from": "T17n0742_001:0549b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯王明矣，知佛可尊！",
        "from": "T17n0742_001:0549b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛知其念，熟視之，其人心喜，喜如獲寶。",
        "from": "T17n0742_001:0549b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一人念曰：",
        "from": "T17n0742_001:0549b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「斯王愚惑，爾為國主，將復何求？",
        "from": "T17n0742_001:0549b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛者若牛，弟子猶車。",
        "from": "T17n0742_001:0549b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼牛牽車，東西南北；",
        "from": "T17n0742_001:0549b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛亦猶然。",
        "from": "T17n0742_001:0549b13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子有何道，屈意奉之乎？",
        "from": "T17n0742_001:0549b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛知其有惡念，必獲其殃，愴然愍之。",
        "from": "T17n0742_001:0549b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人心懼，若有所遭。",
        "from": "T17n0742_001:0549b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二人俱去，三十里停宿，沽酒飲之，共平屬事，訟之紛紛。",
        "from": "T17n0742_001:0549b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其善念者，四王遣善神護焉。",
        "from": "T17n0742_001:0549b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒心謗佛者，太山鬼令酒入腸，猶火燒身，出停路臥，即宛轉落車轍中。",
        "from": "T17n0742_001:0549b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晨有商人車五百乘，轢殺之焉，伴求而見，其然曰：",
        "from": "T17n0742_001:0549b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「吾衰矣！",
        "from": "T17n0742_001:0549b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」還國見，疑取物去為不義，遂輕身委財而逝，展轉遠邁，去舍衛數萬里。",
        "from": "T17n0742_001:0549b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一國，國王崩無太子，讖書云：",
        "from": "T17n0742_001:0549b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「中土有微人，當王斯土。",
        "from": "T17n0742_001:0549b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」群僚議曰：",
        "from": "T17n0742_001:0549b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「國之無君，猶體之無首，難以久立也！",
        "from": "T17n0742_001:0549b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故王有馬，常為王禮。",
        "from": "T17n0742_001:0549b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有任王者，馬必屈膝！",
        "from": "T17n0742_001:0549b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」僉曰：",
        "from": "T17n0742_001:0549b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「大善！",
        "from": "T17n0742_001:0549b25_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」即具嚴駕，以王印綬著車上，人馬填路，觀者莫不揮涕。",
        "from": "T17n0742_001:0549b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "商人亦出觀，國太史曰：",
        "from": "T17n0742_001:0549b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼有黃雲之蓋，斯者氣也！",
        "from": "T17n0742_001:0549b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」神馬直進，屈膝舐商人足。",
        "from": "T17n0742_001:0549b28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群臣欣豫，香湯澡浴，拜為國王，僉然稱臣。",
        "from": "T17n0742_001:0549b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰：",
        "from": "T17n0742_001:0549c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「余本商人，無德於民，不任天位也！",
        "from": "T17n0742_001:0549c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」群僚曰：",
        "from": "T17n0742_001:0549c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「天授有德，神馬屈膝！",
        "from": "T17n0742_001:0549c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」於是遂處王宮，聽省國政。",
        "from": "T17n0742_001:0549c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深惟曰：",
        "from": "T17n0742_001:0549c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「余無微善，何緣獲此？",
        "from": "T17n0742_001:0549c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必是佛恩使之然也！",
        "from": "T17n0742_001:0549c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」晨在御座歎佛無上之聖，率諸群僚，向舍衛稽首曰：",
        "from": "T17n0742_001:0549c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「賤人蒙世尊潤，獲為人王。",
        "from": "T17n0742_001:0549c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯土傳世，不知有佛；",
        "from": "T17n0742_001:0549c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流俗之書，亦無記焉。",
        "from": "T17n0742_001:0549c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願以大明，開斯國人之聾盲！",
        "from": "T17n0742_001:0549c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日願與應真眾垂意，顧斯一時三月！",
        "from": "T17n0742_001:0549c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告阿難：",
        "from": "T17n0742_001:0549c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「勅諸比丘！",
        "from": "T17n0742_001:0549c08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日彼王請，皆當徐徐變化現神尊德，令其國民咸共覩焉！",
        "from": "T17n0742_001:0549c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」諸天聞佛至彼教化，相率導從，作樂歌德，寶帳幢幡，華下紛紛，光色耀人。",
        "from": "T17n0742_001:0549c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛及應真皆坐正殿，王案舍衛國王供養明法，身自斟酌畢，以小机於佛前坐，佛廣說法。",
        "from": "T17n0742_001:0549c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰：",
        "from": "T17n0742_001:0549c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「吾本微人，素無快德，何緣獲斯？",
        "from": "T17n0742_001:0549c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告王曰：",
        "from": "T17n0742_001:0549c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「昔彼王飯佛，王心念言：",
        "from": "T17n0742_001:0549c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『佛如國王，沙門猶臣下。",
        "from": "T17n0742_001:0549c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』王種斯栽，今自獲其果。",
        "from": "T17n0742_001:0549c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一人云：",
        "from": "T17n0742_001:0549c16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『佛若牛，弟子如車。",
        "from": "T17n0742_001:0549c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』彼自種車轢之栽，今在太山為火車所轢，自獲其果也。",
        "from": "T17n0742_001:0549c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非王勇健所能致矣！",
        "from": "T17n0742_001:0549c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為善福隨，履惡禍追，響之應聲，善惡如音，非天、龍、鬼、神所為，非先靈所為，造之者心、成身口矣！",
        "from": "T17n0742_001:0549c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說偈曰：",
        "from": "T17n0742_001:0549c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「心為法本，　　心尊心使，　　中心作惡，",
        "from": "T17n0742_001:0549c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即言即行，　　罪苦自追，　　車轢于轍。",
        "from": "T17n0742_001:0549c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心為法本，　　心尊心使，　　中心念善，",
        "from": "T17n0742_001:0549c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即言即行，　　福樂自追，　　如影隨形。",
        "from": "T17n0742_001:0549c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」世尊又告王曰：",
        "from": "T17n0742_001:0549c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「眾惡之罪，最重有五。",
        "from": "T17n0742_001:0549c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不孝不忠，殺親殺君，家滅國亂，重罪一也。",
        "from": "T17n0742_001:0549c27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅漢之行，得空、不願、無想之定，與佛齊意，拯濟眾生，而愚向之，重罪二也。",
        "from": "T17n0742_001:0549c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛者，眾罪已畢，景福會成，相好十力，法導眾生，慈悲喜護，心過慈母，而愚惡謗，重罪三也。",
        "from": "T17n0742_001:0550a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨沙門，志清行高；",
        "from": "T17n0742_001:0550a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懷抱經法，助佛化愚。",
        "from": "T17n0742_001:0550a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛相紹繼，眾生得度，皆由眾僧。",
        "from": "T17n0742_001:0550a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佞讒交搆，以致不調。",
        "from": "T17n0742_001:0550a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧不調，政法毀，民狂走。",
        "from": "T17n0742_001:0550a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政法毀、民狂走者，三道興，惱比丘僧，重罪四也。",
        "from": "T17n0742_001:0550a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛之尊廟，寶物水土，眾生赤心以貢三尊，愚人或毀盜之，重罪五也。",
        "from": "T17n0742_001:0550a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯斯五者，罪無請，謂之自殺身、自滅族、自投太山火矣！",
        "from": "T17n0742_001:0550a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五罪之重，重於須彌，慎無犯焉！",
        "from": "T17n0742_001:0550a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說經竟，王及群臣皆得須陀洹，受五戒為清信士。",
        "from": "T17n0742_001:0550a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國民有作沙門者、守戒為清信士者，遂以五戒、十善為國政，諸天祐護，國遂興矣！",
        "from": "T17n0742_001:0550a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天、龍、神、王、臣、黎民，無不歡喜。",
        "from": "T17n0742_001:0550a13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說自愛經",
        "from": "T17n0742_001:0550a14_100",
        "context_with_next_sentence": false
    }
]