{
    "X72n1435_012:0289a16_0": "無異禪師廣錄卷第十二",
    "X72n1435_012:0289a18_0": "住博山法孫　弘瀚　彚編",
    "X72n1435_012:0289a19_0": "首座法孫　弘裕　同集",
    "X72n1435_012:0289a20_0": "佛事",
    "X72n1435_012:0289a21_0": "為鵞湖和尚封龕",
    "X72n1435_012:0289a22_0": "我大和尚。",
    "X72n1435_012:0289a22_1": "示有去來。",
    "X72n1435_012:0289a22_2": "體非離即。",
    "X72n1435_012:0289a22_3": "悲願弘深。",
    "X72n1435_012:0289a22_4": "化儀權息。",
    "X72n1435_012:0289a23_0": "暗兮如日之光。",
    "X72n1435_012:0289a23_1": "明兮如漆之黑。",
    "X72n1435_012:0289a23_2": "今朝封固見端倪。",
    "X72n1435_012:0289a23_3": "九九元來八十一。",
    "X72n1435_012:0289a24_4": "諸昆仲。",
    "X72n1435_012:0289a24_5": "助揚法化。",
    "X72n1435_012:0289a24_6": "無礙興哀。",
    "X72n1435_012:0289b01_0": "奠鵞湖和尚茶",
    "X72n1435_012:0289b02_0": "住錫鵞湖四十年。",
    "X72n1435_012:0289b02_1": "清光法雨滿人間。",
    "X72n1435_012:0289b02_2": "而今南邁分身去。",
    "X72n1435_012:0289b03_3": "拄杖縱橫列祖先。",
    "X72n1435_012:0289b03_4": "諸昆仲。",
    "X72n1435_012:0289b03_5": "還聞得無聲三昧麼。",
    "X72n1435_012:0289b03_6": "好將龍口噴來水。",
    "X72n1435_012:0289b04_7": "煑茗和雲奠座前。",
    "X72n1435_012:0289b05_0": "為壽昌和尚入墖",
    "X72n1435_012:0289b06_0": "靈運遍山川。",
    "X72n1435_012:0289b06_1": "莖草化金光之聚。",
    "X72n1435_012:0289b06_2": "音容存梵宇。",
    "X72n1435_012:0289b06_3": "微塵彰法界之身。",
    "X72n1435_012:0289b07_4": "從來白浪滔天。",
    "X72n1435_012:0289b07_5": "今日清風滿地。",
    "X72n1435_012:0289b07_6": "分身南邁。",
    "X72n1435_012:0289b08_0": "他方境界殊常。",
    "X72n1435_012:0289b08_1": "携履西來。",
    "X72n1435_012:0289b08_2": "此處慈祥更顯。",
    "X72n1435_012:0289b08_3": "掀翻西竺窠臼。",
    "X72n1435_012:0289b09_4": "澄潭不許龍蟠。",
    "X72n1435_012:0289b09_5": "重脩古佛安居。",
    "X72n1435_012:0289b09_6": "寶砌還須龍護。",
    "X72n1435_012:0289b10_0": "雖然。",
    "X72n1435_012:0289b10_1": "且道。",
    "X72n1435_012:0289b10_2": "先師就位一句。",
    "X72n1435_012:0289b10_3": "又作麼生舉揚。",
    "X72n1435_012:0289b10_4": "良久云。",
    "X72n1435_012:0289b10_5": "石鼓元無縫。",
    "X72n1435_012:0289b11_6": "山頭賸有雲。",
    "X72n1435_012:0289b12_0": "為壽昌和尚掩墖",
    "X72n1435_012:0289b13_0": "如何是佛大好山。",
    "X72n1435_012:0289b13_1": "白毫如練氣如藍。",
    "X72n1435_012:0289b13_2": "慈雲化作乾坤眼。",
    "X72n1435_012:0289b14_3": "留與人天永遠看。",
    "X72n1435_012:0289b15_0": "拱臺上座火",
    "X72n1435_012:0289b16_0": "古稀之外重添八。",
    "X72n1435_012:0289b16_1": "僧臘叢中最占先。",
    "X72n1435_012:0289b16_2": "何必往生期淨土。",
    "X72n1435_012:0289b17_3": "今朝親見火中蓮。",
    "X72n1435_012:0289b18_0": "光敷禪人火",
    "X72n1435_012:0289b19_0": "二千里外圖何事。",
    "X72n1435_012:0289b19_1": "拋却家鄉驀直行。",
    "X72n1435_012:0289b19_2": "今日火中看變態。",
    "X72n1435_012:0289b20_3": "蓮花陸地帶雲生。",
    "X72n1435_012:0289b21_0": "遍慈禪人火",
    "X72n1435_012:0289b22_0": "緣上座一心彌亘。",
    "X72n1435_012:0289b22_1": "三界為家。",
    "X72n1435_012:0289b22_2": "紫芝孕秀。",
    "X72n1435_012:0289b22_3": "皓玉無瑕。",
    "X72n1435_012:0289b22_4": "今日靈苗縱發。",
    "X72n1435_012:0289b23_5": "佇看火裏蓮花。",
    "X72n1435_012:0289b24_0": "心恒禪人火",
    "X72n1435_012:0289c01_0": "如何是心。",
    "X72n1435_012:0289c01_1": "青山高處白雲深。",
    "X72n1435_012:0289c01_2": "如何是恒。",
    "X72n1435_012:0289c01_3": "堂堂古路坦然平。",
    "X72n1435_012:0289c02_4": "而今撒向孤峯頂。",
    "X72n1435_012:0289c02_5": "烈火燄中恁麼行。",
    "X72n1435_012:0289c02_6": "以火把打一圓相曰。",
    "X72n1435_012:0289c03_7": "恒心何處是。",
    "X72n1435_012:0289c03_8": "遍界放光明。",
    "X72n1435_012:0289c04_0": "禪人祝髮",
    "X72n1435_012:0289c05_0": "米必成飯。",
    "X72n1435_012:0289c05_1": "僧原是俗。",
    "X72n1435_012:0289c05_2": "釋迦由此而弘經。",
    "X72n1435_012:0289c05_3": "馬祖領斯而相撲。",
    "X72n1435_012:0289c06_4": "三千里外。",
    "X72n1435_012:0289c06_5": "喜汝脚下有筋。",
    "X72n1435_012:0289c06_6": "五百年後。",
    "X72n1435_012:0289c06_7": "笑我舌頭無骨。",
    "X72n1435_012:0289c07_8": "咦。",
    "X72n1435_012:0289c07_9": "芟除無始妄因緣。",
    "X72n1435_012:0289c07_10": "且向梵王宮裏宿。",
    "X72n1435_012:0289c08_0": "佛祖贊",
    "X72n1435_012:0289c09_0": "阿彌陀佛贊(二)",
    "X72n1435_012:0289c10_0": "行大願大。",
    "X72n1435_012:0289c10_1": "悲深智深。",
    "X72n1435_012:0289c10_2": "然莊嚴於化境。",
    "X72n1435_012:0289c10_3": "實淨土於凡心。",
    "X72n1435_012:0289c11_0": "須知念佛終成佛。",
    "X72n1435_012:0289c11_1": "未聞無址忽成岑。",
    "X72n1435_012:0289c12_0": "乘願力來。",
    "X72n1435_012:0289c12_1": "償眾生債。",
    "X72n1435_012:0289c12_2": "曰此娑婆。",
    "X72n1435_012:0289c12_3": "即極樂界。",
    "X72n1435_012:0289c12_4": "都云點鐵成金。",
    "X72n1435_012:0289c13_5": "其中有利有害。",
    "X72n1435_012:0289c13_6": "何以故。",
    "X72n1435_012:0289c13_7": "若於紙上見彌陀。",
    "X72n1435_012:0289c13_8": "輸我當行好買賣。",
    "X72n1435_012:0289c15_0": "釋迦文佛贊",
    "X72n1435_012:0289c16_0": "者箇慈尊。",
    "X72n1435_012:0289c16_1": "乘悲願力。",
    "X72n1435_012:0289c16_2": "化有緣眾。",
    "X72n1435_012:0289c16_3": "正信調直。",
    "X72n1435_012:0289c16_4": "彼不知我。",
    "X72n1435_012:0289c17_0": "我不彼識。",
    "X72n1435_012:0289c17_1": "穿過髑髏。",
    "X72n1435_012:0289c17_2": "分明是賊。",
    "X72n1435_012:0289c17_3": "若還錯過此時辰。",
    "X72n1435_012:0289c17_4": "直待當來問彌勒。",
    "X72n1435_012:0289c19_0": "觀音大士贊(二)",
    "X72n1435_012:0289c20_0": "稽首大悲。",
    "X72n1435_012:0289c20_1": "踞盤陀石。",
    "X72n1435_012:0289c20_2": "覿面斯彰。",
    "X72n1435_012:0289c20_3": "今胡云昔。",
    "X72n1435_012:0289c20_4": "眾生淨心。",
    "X72n1435_012:0289c21_0": "諸佛妙智。",
    "X72n1435_012:0289c21_1": "玉齒琅琅。",
    "X72n1435_012:0289c21_2": "不識普字。",
    "X72n1435_012:0289c21_3": "見性非照。",
    "X72n1435_012:0289c21_4": "聞性非聰。",
    "X72n1435_012:0289c22_0": "旋佛旋生。",
    "X72n1435_012:0289c22_1": "寶鏡芳容。",
    "X72n1435_012:0289c22_2": "厥號大悲。",
    "X72n1435_012:0289c22_3": "亦曰大慈。",
    "X72n1435_012:0289c22_4": "孰云普門妙用在茲。",
    "X72n1435_012:0289c24_0": "華藏世界。",
    "X72n1435_012:0289c24_1": "總蒲團間。",
    "X72n1435_012:0289c24_2": "負不了債。",
    "X72n1435_012:0289c24_3": "藉眾生還。",
    "X72n1435_012:0289c24_4": "興慈而運悲。",
    "X72n1435_012:0290a01_5": "援苦以需安。",
    "X72n1435_012:0290a01_6": "現身五道何多事。",
    "X72n1435_012:0290a01_7": "目擊晴空鎮日閒。",
    "X72n1435_012:0290a02_0": "覆紫竹之林。",
    "X72n1435_012:0290a02_1": "而懷深悲。",
    "X72n1435_012:0290a02_2": "踞盤陀之石。",
    "X72n1435_012:0290a02_3": "以默深慈。",
    "X72n1435_012:0290a02_4": "援眾生之苦惱。",
    "X72n1435_012:0290a03_5": "代諸佛之行儀。",
    "X72n1435_012:0290a03_6": "或曰普門示現。",
    "X72n1435_012:0290a03_7": "而不捨風濤浪湧之中者。",
    "X72n1435_012:0290a04_8": "咦。",
    "X72n1435_012:0290a04_9": "今正是時。",
    "X72n1435_012:0290a05_0": "西方境贊",
    "X72n1435_012:0290a06_0": "佛在瑠璃地上。",
    "X72n1435_012:0290a06_1": "花開八德池中。",
    "X72n1435_012:0290a06_2": "欄楯樓臺逈逈。",
    "X72n1435_012:0290a06_3": "珠林寶網重重。",
    "X72n1435_012:0290a07_4": "切不可作境諱却。",
    "X72n1435_012:0290a07_5": "既不作境諱。",
    "X72n1435_012:0290a07_6": "即今彌陀在甚麼處。",
    "X72n1435_012:0290a08_7": "咄。",
    "X72n1435_012:0290a09_0": "浮山舍利墖贊(有序)",
    "X72n1435_012:0290a10_0": "佛昔闍維。",
    "X72n1435_012:0290a10_1": "十剎繁興。",
    "X72n1435_012:0290a10_2": "八王分請舍利。",
    "X72n1435_012:0290a10_3": "入震旦者。",
    "X72n1435_012:0290a10_4": "葢無幾也。",
    "X72n1435_012:0290a11_5": "耶舍尊者始從西域。",
    "X72n1435_012:0290a11_6": "將舍利。",
    "X72n1435_012:0290a11_7": "安奉于廬山者有二。",
    "X72n1435_012:0290a12_8": "其一在歸宗之金輪峯。",
    "X72n1435_012:0290a12_9": "自晉歷今千有餘載。",
    "X72n1435_012:0290a12_10": "放光輒彌山谷。",
    "X72n1435_012:0290a13_11": "屢現祥異。",
    "X72n1435_012:0290a13_12": "不可殫述。",
    "X72n1435_012:0290a13_13": "果清湛上座。",
    "X72n1435_012:0290a13_14": "紫柏老人子也。",
    "X72n1435_012:0290a14_15": "以因緣力。",
    "X72n1435_012:0290a14_16": "積歲葺治。",
    "X72n1435_012:0290a14_17": "啟視。",
    "X72n1435_012:0290a14_18": "得金銀瑠璃滿三缾。",
    "X72n1435_012:0290a15_19": "其餘眷屬舍利。",
    "X72n1435_012:0290a15_20": "不可稱計。",
    "X72n1435_012:0290a15_21": "分布諸善信人。",
    "X72n1435_012:0290a15_22": "願力堅者。",
    "X72n1435_012:0290a16_23": "輙得之。",
    "X72n1435_012:0290a16_24": "吳太史觀我得二十有二顆。",
    "X72n1435_012:0290a16_25": "久復開視。",
    "X72n1435_012:0290a16_26": "滿三十顆。",
    "X72n1435_012:0290a17_27": "眾人聚觀。",
    "X72n1435_012:0290a17_28": "各隨所見。",
    "X72n1435_012:0290a17_29": "大小色相。",
    "X72n1435_012:0290a17_30": "種種不一。",
    "X72n1435_012:0290a17_31": "其他神變。",
    "X72n1435_012:0290a18_32": "盡智思量。",
    "X72n1435_012:0290a18_33": "所不能測。",
    "X72n1435_012:0290a18_34": "太史爰以敬心。",
    "X72n1435_012:0290a18_35": "合于悲智。",
    "X72n1435_012:0290a19_36": "欲使見聞讚歎禮拜。",
    "X72n1435_012:0290a19_37": "悉植勝因。",
    "X72n1435_012:0290a19_38": "乃謀于浮山之巔建窣堵波。",
    "X72n1435_012:0290a20_39": "以擬于金輪。",
    "X72n1435_012:0290a20_40": "昔有人。",
    "X72n1435_012:0290a20_41": "入地獄見地藏菩薩。",
    "X72n1435_012:0290a21_0": "曰汝罪惡深重。",
    "X72n1435_012:0290a21_1": "應墮地獄。",
    "X72n1435_012:0290a21_2": "急往鄮山禮舍利墖。",
    "X72n1435_012:0290a21_3": "可脫此苦。",
    "X72n1435_012:0290a22_4": "觀夫一禮一拜。",
    "X72n1435_012:0290a22_5": "即脫地獄。",
    "X72n1435_012:0290a22_6": "則太史所植勝因。",
    "X72n1435_012:0290a22_7": "與諸善信。",
    "X72n1435_012:0290a23_8": "速成無上菩提。",
    "X72n1435_012:0290a23_9": "無疑也。",
    "X72n1435_012:0290a23_10": "余游浮渡。",
    "X72n1435_012:0290a23_11": "因得瞻禮。",
    "X72n1435_012:0290a24_0": "合掌讚歎。",
    "X72n1435_012:0290a24_1": "而說偈言。",
    "X72n1435_012:0290b01_0": "諸佛闍維時。",
    "X72n1435_012:0290b01_1": "廣流布舍利。",
    "X72n1435_012:0290b01_2": "散滿閻浮提。",
    "X72n1435_012:0290b01_3": "皆從因緣有。",
    "X72n1435_012:0290b02_0": "放光開幽暗。",
    "X72n1435_012:0290b02_1": "絕滅一切苦。",
    "X72n1435_012:0290b02_2": "普使見聞者。",
    "X72n1435_012:0290b02_3": "悉發菩提心。",
    "X72n1435_012:0290b03_0": "廣修眾妙行。",
    "X72n1435_012:0290b03_1": "圓滿波羅密。",
    "X72n1435_012:0290b03_2": "功德不思議。",
    "X72n1435_012:0290b03_3": "盡回向佛智。",
    "X72n1435_012:0290b04_0": "達磨大師贊(四)",
    "X72n1435_012:0290b05_0": "喚汝是箇達磨。",
    "X72n1435_012:0290b05_1": "受人博換。",
    "X72n1435_012:0290b05_2": "喚汝是箇博山。",
    "X72n1435_012:0290b05_3": "覿面迷亂。",
    "X72n1435_012:0290b06_0": "我今識得渠。",
    "X72n1435_012:0290b06_1": "原是秦時鍍鑠鑽。",
    "X72n1435_012:0290b06_2": "咄。",
    "X72n1435_012:0290b06_3": "如幻如幻。",
    "X72n1435_012:0290b07_0": "老臊胡。",
    "X72n1435_012:0290b07_1": "面壁九。",
    "X72n1435_012:0290b07_2": "剜人心。",
    "X72n1435_012:0290b07_3": "截人肘。",
    "X72n1435_012:0290b07_4": "幾遭毒害。",
    "X72n1435_012:0290b07_5": "而地轉天旋。",
    "X72n1435_012:0290b08_6": "一片真機。",
    "X72n1435_012:0290b08_7": "而象騰獅吼。",
    "X72n1435_012:0290b08_8": "依然隻履又西歸。",
    "X72n1435_012:0290b08_9": "真箇鰕跳不出斗。",
    "X72n1435_012:0290b10_0": "擡頭不見有天。",
    "X72n1435_012:0290b10_1": "低頭不見有地。",
    "X72n1435_012:0290b10_2": "一雙大耳連環。",
    "X72n1435_012:0290b10_3": "兩箇鼻孔出氣。",
    "X72n1435_012:0290b11_4": "滔滔白浪蹋長蘆。",
    "X72n1435_012:0290b11_5": "識得渠儂非小事。",
    "X72n1435_012:0290b11_6": "咄。",
    "X72n1435_012:0290b12_0": "紫氣祥雲。",
    "X72n1435_012:0290b12_1": "旋覆江岸。",
    "X72n1435_012:0290b12_2": "折蘆者誰。",
    "X72n1435_012:0290b12_3": "是鐵面漢。",
    "X72n1435_012:0290b12_4": "近傍誠難。",
    "X72n1435_012:0290b13_0": "胡為而贊。",
    "X72n1435_012:0290b13_1": "兩條墨跡逈思惟。",
    "X72n1435_012:0290b13_2": "一顆明珠光燦爛。",
    "X72n1435_012:0290b14_0": "老子贊",
    "X72n1435_012:0290b15_0": "覿面是條青牛。",
    "X72n1435_012:0290b15_1": "四蹄蹋地。",
    "X72n1435_012:0290b15_2": "覿面是箇老子。",
    "X72n1435_012:0290b15_3": "鬚髮皓然。",
    "X72n1435_012:0290b16_0": "我記得你生于李樹下。",
    "X72n1435_012:0290b16_1": "母腹曾經八十年。",
    "X72n1435_012:0290b16_2": "惱釋迦涅槃太早。",
    "X72n1435_012:0290b17_3": "吐玄津混沌之先。",
    "X72n1435_012:0290b17_4": "而今渾化成團去。",
    "X72n1435_012:0290b17_5": "顛倒人間永遠傳。",
    "X72n1435_012:0290b19_0": "羅漢贊(四)",
    "X72n1435_012:0290b20_0": "從來三事衲。",
    "X72n1435_012:0290b20_1": "知是幾千春。",
    "X72n1435_012:0290b20_2": "今日重拈綴。",
    "X72n1435_012:0290b20_3": "當陽見素心。",
    "X72n1435_012:0290b21_0": "碧桃盤累累。",
    "X72n1435_012:0290b21_1": "瑤草影沉沉。",
    "X72n1435_012:0290b21_2": "更有西來旨。",
    "X72n1435_012:0290b21_3": "山高莫浪尋。",
    "X72n1435_012:0290b22_0": "鉢從何處來。",
    "X72n1435_012:0290b22_1": "勞彼鼓雙翅。",
    "X72n1435_012:0290b22_2": "尊者窺碧漢。",
    "X72n1435_012:0290b22_3": "預作捧鉢計。",
    "X72n1435_012:0290b23_0": "大道元磊落。",
    "X72n1435_012:0290b23_1": "三昧貴遊戲。",
    "X72n1435_012:0290b23_2": "不逐見聞緣。",
    "X72n1435_012:0290b23_3": "超然登十地。",
    "X72n1435_012:0290b24_0": "貝葉靈文。",
    "X72n1435_012:0290b24_1": "琅琅玉齒。",
    "X72n1435_012:0290b24_2": "聽誦者誰。",
    "X72n1435_012:0290b24_3": "踞地獅子。",
    "X72n1435_012:0290b24_4": "雲兮竹兮。",
    "X72n1435_012:0290c01_0": "高山仰止。",
    "X72n1435_012:0290c01_1": "經了月明。",
    "X72n1435_012:0290c01_2": "終而復始。",
    "X72n1435_012:0290c02_0": "分身南邁。",
    "X72n1435_012:0290c02_1": "神龜捧足。",
    "X72n1435_012:0290c02_2": "布袋全收。",
    "X72n1435_012:0290c02_3": "指頭獨矗。",
    "X72n1435_012:0290c02_4": "直下明珠。",
    "X72n1435_012:0290c03_0": "遠山靈木。",
    "X72n1435_012:0290c03_1": "至理彌綸。",
    "X72n1435_012:0290c03_2": "阿誰相續。",
    "X72n1435_012:0290c04_0": "十八羅漢圖贊",
    "X72n1435_012:0290c05_0": "眾禪和跨步武。",
    "X72n1435_012:0290c05_1": "降得龍兮伏得虎。",
    "X72n1435_012:0290c05_2": "塵沙結使未乾枯。",
    "X72n1435_012:0290c06_0": "傀儡一棚誰作主。",
    "X72n1435_012:0290c06_1": "飛錫懸光倚杖藜。",
    "X72n1435_012:0290c06_2": "分明撒出駭雞犀。",
    "X72n1435_012:0290c07_3": "欲知佛法深深處。",
    "X72n1435_012:0290c07_4": "山淨雲收聽鳥啼。",
    "X72n1435_012:0290c08_0": "雲棲大師贊",
    "X72n1435_012:0290c09_0": "生在杭城蘇州有。",
    "X72n1435_012:0290c09_1": "老在杭城常州有。",
    "X72n1435_012:0290c09_2": "三十年前孔子之徒。",
    "X72n1435_012:0290c10_3": "三十年後釋氏之友。",
    "X72n1435_012:0290c10_4": "八德池中喜種蓮。",
    "X72n1435_012:0290c10_5": "彌陀塞破諸人口。",
    "X72n1435_012:0290c11_6": "覿面不知渠是誰。",
    "X72n1435_012:0290c11_7": "七七還渠四十九。",
    "X72n1435_012:0290c12_0": "又",
    "X72n1435_012:0290c13_0": "頭顱拄天。",
    "X72n1435_012:0290c13_1": "袈裟著地。",
    "X72n1435_012:0290c13_2": "此是阿誰。",
    "X72n1435_012:0290c13_3": "彌陀再世。",
    "X72n1435_012:0290c14_0": "題優曇華圖",
    "X72n1435_012:0290c15_0": "誰將紅綠現優曇。",
    "X72n1435_012:0290c15_1": "數遍前三及後三。",
    "X72n1435_012:0290c15_2": "謾道法華親指示。",
    "X72n1435_012:0290c16_3": "而今覿面是司南。",
    "X72n1435_012:0290c17_0": "壽昌和尚贊(四)",
    "X72n1435_012:0290c18_0": "峩峯老漢。",
    "X72n1435_012:0290c18_1": "篤行可佳。",
    "X72n1435_012:0290c18_2": "形之非形。",
    "X72n1435_012:0290c18_3": "丹青難畵。",
    "X72n1435_012:0290c18_4": "灰頭土面。",
    "X72n1435_012:0290c19_0": "笑神光拜雪。",
    "X72n1435_012:0290c19_1": "銅心鐵膽。",
    "X72n1435_012:0290c19_2": "罰世尊拈花。",
    "X72n1435_012:0290c19_3": "爛蒲團而為坐具。",
    "X72n1435_012:0290c20_4": "破蓑衣以當袈裟。",
    "X72n1435_012:0290c20_5": "枕石潄泉。",
    "X72n1435_012:0290c20_6": "粘雲帶霞。",
    "X72n1435_012:0290c20_7": "風流客不堪誇。",
    "X72n1435_012:0290c21_8": "大好山中三十載。",
    "X72n1435_012:0290c21_9": "鋤頭柄有活生涯。",
    "X72n1435_012:0290c22_0": "稽首吾師。",
    "X72n1435_012:0290c22_1": "四生慈父。",
    "X72n1435_012:0290c22_2": "語入重玄。",
    "X72n1435_012:0290c22_3": "機貴回互。",
    "X72n1435_012:0290c22_4": "七處道場。",
    "X72n1435_012:0290c23_0": "千指圍繞。",
    "X72n1435_012:0290c23_1": "擲如意珠。",
    "X72n1435_012:0290c23_2": "傾出栲栳。",
    "X72n1435_012:0290c23_3": "者一句子。",
    "X72n1435_012:0290c23_4": "終朝賣弄。",
    "X72n1435_012:0290c24_0": "將是曰非。",
    "X72n1435_012:0290c24_1": "以輕為重。",
    "X72n1435_012:0290c24_2": "我探虎穴。",
    "X72n1435_012:0290c24_3": "親遭毒手。",
    "X72n1435_012:0290c24_4": "絕後再甦。",
    "X72n1435_012:0291a01_0": "如飲醇酒。",
    "X72n1435_012:0291a01_1": "壯齡至老。",
    "X72n1435_012:0291a01_2": "惟一不二。",
    "X72n1435_012:0291a01_3": "泊焉辭眾。",
    "X72n1435_012:0291a01_4": "分明指示。",
    "X72n1435_012:0291a02_0": "天下聞之。",
    "X72n1435_012:0291a02_1": "稱甘露滅。",
    "X72n1435_012:0291a02_2": "眷屬雲仍。",
    "X72n1435_012:0291a02_3": "芳塵凜烈。",
    "X72n1435_012:0291a03_0": "者箇和尚。",
    "X72n1435_012:0291a03_1": "半隱半顯。",
    "X72n1435_012:0291a03_2": "指下為高。",
    "X72n1435_012:0291a03_3": "將深作淺。",
    "X72n1435_012:0291a03_4": "有時慈祥與脩羅輩息嗔。",
    "X72n1435_012:0291a04_5": "有時惡發將佛祖也褒貶。",
    "X72n1435_012:0291a04_6": "今日被人寫上畫圖。",
    "X72n1435_012:0291a05_7": "大似美玉遭幾點瑕玷。",
    "X72n1435_012:0291a05_8": "博山不解含容。",
    "X72n1435_012:0291a05_9": "代為諸人聊通一線。",
    "X72n1435_012:0291a06_10": "通一線。",
    "X72n1435_012:0291a06_11": "米中有飯。",
    "X72n1435_012:0291a06_12": "麥中有麵。",
    "X72n1435_012:0291a06_13": "咄。",
    "X72n1435_012:0291a07_0": "此似吾師真箇是。",
    "X72n1435_012:0291a07_1": "丟却把鋤看株樹。",
    "X72n1435_012:0291a07_2": "蒲團覆地絕纖塵。",
    "X72n1435_012:0291a08_3": "蠢動含靈皆得度。",
    "X72n1435_012:0291a08_4": "咄。",
    "X72n1435_012:0291a08_5": "切忌道著。",
    "X72n1435_012:0291a09_0": "圓相贊",
    "X72n1435_012:0291a10_0": "啊。",
    "X72n1435_012:0291a10_1": "是輪月麼。",
    "X72n1435_012:0291a10_2": "多兩耳朵。",
    "X72n1435_012:0291a10_3": "是腔水麼。",
    "X72n1435_012:0291a10_4": "少幾重波。",
    "X72n1435_012:0291a10_5": "想是世尊遺愛。",
    "X72n1435_012:0291a11_6": "仰山傳訛。",
    "X72n1435_012:0291a11_7": "幾人尋不著。",
    "X72n1435_012:0291a11_8": "千般籌算。",
    "X72n1435_012:0291a11_9": "及至相會處。",
    "X72n1435_012:0291a12_10": "一場懡[怡-台+羅]。",
    "X72n1435_012:0291a12_11": "令予笑不徹。",
    "X72n1435_012:0291a12_12": "只得稽首再拜。",
    "X72n1435_012:0291a12_13": "南無佛陀。",
    "X72n1435_012:0291a13_0": "峯頂和尚贊",
    "X72n1435_012:0291a14_0": "者和尚。",
    "X72n1435_012:0291a14_1": "相非好。",
    "X72n1435_012:0291a14_2": "緇混素。",
    "X72n1435_012:0291a14_3": "寅作卯。",
    "X72n1435_012:0291a14_4": "汲水擔折。",
    "X72n1435_012:0291a14_5": "已見辯翁。",
    "X72n1435_012:0291a15_0": "烹茶銚側。",
    "X72n1435_012:0291a15_1": "而逢蘭老。",
    "X72n1435_012:0291a15_2": "供母下視長蘆。",
    "X72n1435_012:0291a15_3": "弘戒多言護草。",
    "X72n1435_012:0291a16_0": "惟不可說向上機鋒。",
    "X72n1435_012:0291a16_1": "何以故。",
    "X72n1435_012:0291a16_2": "道理玄談渾不曉。",
    "X72n1435_012:0291a17_0": "洪濤山天安律師贊(有序)",
    "X72n1435_012:0291a18_0": "余挂錫博山有年矣。",
    "X72n1435_012:0291a18_1": "每慮梓里。",
    "X72n1435_012:0291a18_2": "開化無人。",
    "X72n1435_012:0291a18_3": "往來衲子。",
    "X72n1435_012:0291a19_0": "傳有天安法主闡揚教乘。",
    "X72n1435_012:0291a19_1": "作羯磨師。",
    "X72n1435_012:0291a19_2": "余心儀之。",
    "X72n1435_012:0291a19_3": "未得緣晤。",
    "X72n1435_012:0291a20_4": "丁卯春。",
    "X72n1435_012:0291a20_5": "余旋故丘。",
    "X72n1435_012:0291a20_6": "則安公遷化已久。",
    "X72n1435_012:0291a20_7": "入山見卵墖巋然。",
    "X72n1435_012:0291a21_8": "因述贊。",
    "X72n1435_012:0291a21_9": "以詶夙心。",
    "X72n1435_012:0291a22_0": "世界無依。",
    "X72n1435_012:0291a22_1": "根塵空寂。",
    "X72n1435_012:0291a22_2": "悲智成身。",
    "X72n1435_012:0291a22_3": "而興慧益。",
    "X72n1435_012:0291a22_4": "戒德難思。",
    "X72n1435_012:0291a23_0": "行非有己。",
    "X72n1435_012:0291a23_1": "慈緣廣攝。",
    "X72n1435_012:0291a23_2": "先余鄉梓。",
    "X72n1435_012:0291a23_3": "說法雲興。",
    "X72n1435_012:0291a23_4": "誨人缾瀉。",
    "X72n1435_012:0291a24_0": "施利不沾。",
    "X72n1435_012:0291a24_1": "遠邇咸化。",
    "X72n1435_012:0291a24_2": "化緣云畢。",
    "X72n1435_012:0291a24_3": "而塔此山。",
    "X72n1435_012:0291a24_4": "法音奇演。",
    "X72n1435_012:0291b01_0": "鳥語喃喃。",
    "X72n1435_012:0291b02_0": "雲陽耆宿贊",
    "X72n1435_012:0291b03_0": "雲散于長空。",
    "X72n1435_012:0291b03_1": "陽回于大地。",
    "X72n1435_012:0291b03_2": "盡華藏含靈。",
    "X72n1435_012:0291b03_3": "拄杖頭出氣。",
    "X72n1435_012:0291b04_0": "空印法師贊",
    "X72n1435_012:0291b05_0": "者老凍儂。",
    "X72n1435_012:0291b05_1": "寒威凜烈。",
    "X72n1435_012:0291b05_2": "忽死忽生。",
    "X72n1435_012:0291b05_3": "是何時節。",
    "X72n1435_012:0291b05_4": "酌古該今。",
    "X72n1435_012:0291b06_0": "雷轟電掣。",
    "X72n1435_012:0291b06_1": "滲漏行藏。",
    "X72n1435_012:0291b06_2": "與人各別。",
    "X72n1435_012:0291b06_3": "不各別。",
    "X72n1435_012:0291b06_4": "贏得人傳甘露滅。",
    "X72n1435_012:0291b08_0": "杲禪座贊",
    "X72n1435_012:0291b09_0": "此是何人。",
    "X72n1435_012:0291b09_1": "是我杲兄。",
    "X72n1435_012:0291b09_2": "蘊之藏之。",
    "X72n1435_012:0291b09_3": "慧日慈風。",
    "X72n1435_012:0291b09_4": "有餘錢而贍叢席。",
    "X72n1435_012:0291b10_5": "無賸法以導羣蒙。",
    "X72n1435_012:0291b10_6": "千年不改青松色。",
    "X72n1435_012:0291b10_7": "湛水流雲徹太空。",
    "X72n1435_012:0291b12_0": "一菴法主贊",
    "X72n1435_012:0291b13_0": "一亦不可得。",
    "X72n1435_012:0291b13_1": "菴跡何所留。",
    "X72n1435_012:0291b13_2": "寶池澄巨浪。",
    "X72n1435_012:0291b13_3": "橫架採蓮舟。",
    "X72n1435_012:0291b14_0": "古心法主贊",
    "X72n1435_012:0291b15_0": "古佛傳燈久。",
    "X72n1435_012:0291b15_1": "心師續燄長。",
    "X72n1435_012:0291b15_2": "欲知渠去處。",
    "X72n1435_012:0291b15_3": "芳草臥斜陽。",
    "X72n1435_012:0291b16_0": "拙如贊",
    "X72n1435_012:0291b17_0": "覓巧不得。",
    "X72n1435_012:0291b17_1": "拙自何來。",
    "X72n1435_012:0291b17_2": "如摩尼珠。",
    "X72n1435_012:0291b17_3": "投石火胎。",
    "X72n1435_012:0291b17_4": "頓瞥地時何所據。",
    "X72n1435_012:0291b18_5": "煙雲深處姑蘇臺。",
    "X72n1435_012:0291b19_0": "解深贊",
    "X72n1435_012:0291b20_0": "解甚深法。",
    "X72n1435_012:0291b20_1": "碎煩惱窟。",
    "X72n1435_012:0291b20_2": "鐵壁虗通。",
    "X72n1435_012:0291b20_3": "銀山突屼。",
    "X72n1435_012:0291b20_4": "萬仞崖頭眨眼看。",
    "X72n1435_012:0291b21_5": "緊著脚跟休恍忽。",
    "X72n1435_012:0291b22_0": "龍峯八十一真贊",
    "X72n1435_012:0291b23_0": "生緣八十餘。",
    "X72n1435_012:0291b23_1": "誰人寫上紙。",
    "X72n1435_012:0291b23_2": "根塵既本淨。",
    "X72n1435_012:0291b23_3": "何必染青紫。",
    "X72n1435_012:0291b24_0": "戒行若虗空。",
    "X72n1435_012:0291b24_1": "華藏為棲址。",
    "X72n1435_012:0291b24_2": "別號號龍峯。",
    "X72n1435_012:0291b24_3": "啟予親贊此。",
    "X72n1435_012:0291c01_0": "咦。",
    "X72n1435_012:0291c01_1": "忽然覿面頭邊珠。",
    "X72n1435_012:0291c01_2": "滄海直教枯到底。",
    "X72n1435_012:0291c02_0": "趙豫齋真贊",
    "X72n1435_012:0291c03_0": "豫齋老翁。",
    "X72n1435_012:0291c03_1": "者等形狀。",
    "X72n1435_012:0291c03_2": "髭鬚白而不白。",
    "X72n1435_012:0291c03_3": "和尚相而非相。",
    "X72n1435_012:0291c04_0": "十卷楞嚴。",
    "X72n1435_012:0291c04_1": "任你週流。",
    "X72n1435_012:0291c04_2": "一脈菩提。",
    "X72n1435_012:0291c04_3": "從人譽謗。",
    "X72n1435_012:0291c04_4": "似者等沒用底老頭陀。",
    "X72n1435_012:0291c05_5": "貶在閻浮極惡世中。",
    "X72n1435_012:0291c05_6": "留與人天作榜樣。",
    "X72n1435_012:0291c06_0": "宛陵王玄石影贊",
    "X72n1435_012:0291c07_0": "扶疎松與竹。",
    "X72n1435_012:0291c07_1": "清適茶兼酒。",
    "X72n1435_012:0291c07_2": "中有得意人。",
    "X72n1435_012:0291c07_3": "面南看北斗。",
    "X72n1435_012:0291c08_0": "今日相逢山水間。",
    "X72n1435_012:0291c08_1": "素縑未展竟何有。",
    "X72n1435_012:0291c08_2": "崆峒石畔芝蘭香。",
    "X72n1435_012:0291c09_3": "風雲筆底龍蛇走。",
    "X72n1435_012:0291c09_4": "道服樵巾。",
    "X72n1435_012:0291c09_5": "岸眉海口。",
    "X72n1435_012:0291c09_6": "雅句新裁。",
    "X72n1435_012:0291c10_0": "奇文立就。",
    "X72n1435_012:0291c10_1": "烹泉倩童。",
    "X72n1435_012:0291c10_2": "採芝借手。",
    "X72n1435_012:0291c10_3": "箇中無限風流。",
    "X72n1435_012:0291c10_4": "不落時人窠臼。",
    "X72n1435_012:0291c11_5": "五湖之內。",
    "X72n1435_012:0291c11_6": "都識得玄石先生。",
    "X72n1435_012:0291c11_7": "千古之下。",
    "X72n1435_012:0291c11_8": "悉稱為博山社友。",
    "X72n1435_012:0291c13_0": "劉龍田居士影贊",
    "X72n1435_012:0291c14_0": "大圓光中。",
    "X72n1435_012:0291c14_1": "惟公明哲。",
    "X72n1435_012:0291c14_2": "松風鳥語。",
    "X72n1435_012:0291c14_3": "代公之舌。",
    "X72n1435_012:0291c14_4": "演微妙音。",
    "X72n1435_012:0291c15_0": "宣第一義。",
    "X72n1435_012:0291c15_1": "趨世出世。",
    "X72n1435_012:0291c15_2": "往來遊戲。",
    "X72n1435_012:0291c15_3": "何以知之。",
    "X72n1435_012:0291c15_4": "山川草木。",
    "X72n1435_012:0291c16_0": "日月星辰。",
    "X72n1435_012:0291c16_1": "而為眷屬。",
    "X72n1435_012:0291c16_2": "釋迦不會。",
    "X72n1435_012:0291c16_3": "彌勒再來。",
    "X72n1435_012:0291c16_4": "香雲海眾。",
    "X72n1435_012:0291c17_0": "讚嘆奇哉。",
    "X72n1435_012:0291c18_0": "查汝定居士影贊(二)",
    "X72n1435_012:0291c19_0": "一二三四五。",
    "X72n1435_012:0291c19_1": "急急連忙數。",
    "X72n1435_012:0291c19_2": "不弄祕魔叉。",
    "X72n1435_012:0291c19_3": "解打禾山鼓。",
    "X72n1435_012:0291c20_0": "更欲覓言詮。",
    "X72n1435_012:0291c20_1": "和聲當面吐。",
    "X72n1435_012:0291c20_2": "是誰安作窩。",
    "X72n1435_012:0291c20_3": "大千無寸土。",
    "X72n1435_012:0291c21_0": "幸有上頭關。",
    "X72n1435_012:0291c21_1": "濶大堪步武。",
    "X72n1435_012:0291c21_2": "斬却雪峯蛇。",
    "X72n1435_012:0291c21_3": "笑殺玄沙虎。",
    "X72n1435_012:0291c22_0": "我今贅此題。",
    "X72n1435_012:0291c22_1": "留作閻浮譜。",
    "X72n1435_012:0291c23_0": "那裏來三一窩。",
    "X72n1435_012:0291c23_1": "似認得較不多。",
    "X72n1435_012:0291c23_2": "從來無有面目。",
    "X72n1435_012:0291c23_3": "今朝戴髮頭陀。",
    "X72n1435_012:0291c24_4": "更將水墨傳真假。",
    "X72n1435_012:0291c24_5": "笑殺當年指路婆。",
    "X72n1435_012:0292a01_0": "自贊",
    "X72n1435_012:0292a02_0": "余集生居士。",
    "X72n1435_012:0292a02_1": "寫師像與自像。",
    "X72n1435_012:0292a02_2": "相視而坐。",
    "X72n1435_012:0292a02_3": "請贊。",
    "X72n1435_012:0292a02_4": "時居士五十壽。",
    "X72n1435_012:0292a03_5": "且有　內召。",
    "X72n1435_012:0292a03_6": "故末句云云。",
    "X72n1435_012:0292a04_0": "博山余居士。",
    "X72n1435_012:0292a04_1": "真箇熟因緣。",
    "X72n1435_012:0292a04_2": "促膝撩衣坐。",
    "X72n1435_012:0292a04_3": "知是幾千年。",
    "X72n1435_012:0292a05_0": "悟性空彰毫楮。",
    "X72n1435_012:0292a05_1": "緣生法上親眉宇。",
    "X72n1435_012:0292a05_2": "活似龍兮獰似虎。",
    "X72n1435_012:0292a06_0": "箇中元不分賓主。",
    "X72n1435_012:0292a06_1": "一輪明月照金沙。",
    "X72n1435_012:0292a06_2": "大千隨處茂靈芽。",
    "X72n1435_012:0292a07_3": "剎剎塵塵轉法華。",
    "X72n1435_012:0292a07_4": "雪巢癯寉噉晴霞。",
    "X72n1435_012:0292a07_5": "翻身須辯婆心切。",
    "X72n1435_012:0292a08_6": "紅爐燄裏寒氷冽。",
    "X72n1435_012:0292a08_7": "徹底無依笑點頭。",
    "X72n1435_012:0292a08_8": "眼中慎勿沾金屑。",
    "X72n1435_012:0292a09_9": "五十方知四九非。",
    "X72n1435_012:0292a09_10": "生擒兔象顯全威。",
    "X72n1435_012:0292a09_11": "殷勤。",
    "X72n1435_012:0292a10_0": "國事猶佛事。",
    "X72n1435_012:0292a10_1": "一片丹心捧日暉。",
    "X72n1435_012:0292a11_0": "者箇漢。",
    "X72n1435_012:0292a11_1": "清淨眼。",
    "X72n1435_012:0292a11_2": "昂藏眉。",
    "X72n1435_012:0292a11_3": "最惡毒。",
    "X72n1435_012:0292a11_4": "假慈悲。",
    "X72n1435_012:0292a11_5": "凡說法不思惟。",
    "X72n1435_012:0292a12_6": "罵諸方痛針錐。",
    "X72n1435_012:0292a12_7": "扯人萬丈崖頭立。",
    "X72n1435_012:0292a12_8": "盡力將身祇一推。",
    "X72n1435_012:0292a13_9": "咦。",
    "X72n1435_012:0292a13_10": "必也是誰(陳旻昭居士請)。",
    "X72n1435_012:0292a14_0": "生平不就他學。",
    "X72n1435_012:0292a14_1": "祇向自心捫摸。",
    "X72n1435_012:0292a14_2": "忽然打破漆桶。",
    "X72n1435_012:0292a14_3": "隨處令人驚愕。",
    "X72n1435_012:0292a15_4": "某禪和。",
    "X72n1435_012:0292a15_5": "毋自錯。",
    "X72n1435_012:0292a15_6": "者廝不異常流。",
    "X72n1435_012:0292a15_7": "討甚超方出格。",
    "X72n1435_012:0292a17_0": "江北生。",
    "X72n1435_012:0292a17_1": "江南長。",
    "X72n1435_012:0292a17_2": "卓有來由。",
    "X72n1435_012:0292a17_3": "全無伎倆。",
    "X72n1435_012:0292a17_4": "口裏終朝漉漉。",
    "X72n1435_012:0292a18_0": "心中全無靜想。",
    "X72n1435_012:0292a18_1": "隨方多結歡喜緣。",
    "X72n1435_012:0292a18_2": "留與諸人作清賞。",
    "X72n1435_012:0292a19_0": "紙上畵我不像。",
    "X72n1435_012:0292a19_1": "真是他難近傍。",
    "X72n1435_012:0292a19_2": "有渾身。",
    "X72n1435_012:0292a19_3": "無五臟。",
    "X72n1435_012:0292a19_4": "佛法抖擻沒纖毫。",
    "X72n1435_012:0292a20_5": "敢受諸人之供養(傳實禪人請)。",
    "X72n1435_012:0292a21_0": "者老子多揑空。",
    "X72n1435_012:0292a21_1": "貪睡眠常做夢。",
    "X72n1435_012:0292a21_2": "入市廛過麟鳳。",
    "X72n1435_012:0292a21_3": "近著他眉毛痛。",
    "X72n1435_012:0292a22_4": "泛泛端如五兩輕。",
    "X72n1435_012:0292a22_5": "堆堆何啻千斤重。",
    "X72n1435_012:0292a23_0": "者廝兒無得失。",
    "X72n1435_012:0292a23_1": "了一緣萬事畢。",
    "X72n1435_012:0292a23_2": "少矯詐最朴實。",
    "X72n1435_012:0292a23_3": "愛與人宣祕密。",
    "X72n1435_012:0292a24_4": "有時獨坐亂峯巔。",
    "X72n1435_012:0292a24_5": "指點風雲吹觱篥。",
    "X72n1435_012:0292a24_6": "咄。",
    "X72n1435_012:0292b01_0": "者老凍儂。",
    "X72n1435_012:0292b01_1": "自謂英傑。",
    "X72n1435_012:0292b01_2": "無些子長。",
    "X72n1435_012:0292b01_3": "為法門切。",
    "X72n1435_012:0292b01_4": "舌根謙讓如線。",
    "X72n1435_012:0292b02_5": "脊梁剛硬若鐵。",
    "X72n1435_012:0292b02_6": "終日叨叨千萬言。",
    "X72n1435_012:0292b02_7": "添得頭顱幾點雪。",
    "X72n1435_012:0292b04_0": "者漢無長。",
    "X72n1435_012:0292b04_1": "祇肯認非。",
    "X72n1435_012:0292b04_2": "逢剛則柔。",
    "X72n1435_012:0292b04_3": "遇慈則威。",
    "X72n1435_012:0292b04_4": "挾帶挾路。",
    "X72n1435_012:0292b05_0": "知顯知微。",
    "X72n1435_012:0292b05_1": "肚裏了無些子物。",
    "X72n1435_012:0292b05_2": "一生贏得口頭肥。",
    "X72n1435_012:0292b06_0": "咦。",
    "X72n1435_012:0292b06_1": "通身狼狽。",
    "X72n1435_012:0292b06_2": "滿面塵埃。",
    "X72n1435_012:0292b06_3": "喜而不昧。",
    "X72n1435_012:0292b06_4": "怒而不嗔。",
    "X72n1435_012:0292b06_5": "罵盤山無面目。",
    "X72n1435_012:0292b07_6": "笑船子解藏身。",
    "X72n1435_012:0292b07_7": "流雲古木深深處。",
    "X72n1435_012:0292b07_8": "嘉羽奇花耀眼新。",
    "X72n1435_012:0292b08_9": "咦。",
    "X72n1435_012:0292b08_10": "汝是何人。",
    "X72n1435_012:0292b09_0": "生成眉宇。",
    "X72n1435_012:0292b09_1": "是何標格。",
    "X72n1435_012:0292b09_2": "從本無家。",
    "X72n1435_012:0292b09_3": "隨方作客。",
    "X72n1435_012:0292b09_4": "或時被有識者呼為瞎驢。",
    "X72n1435_012:0292b10_5": "或時被無知者尊為禪伯。",
    "X72n1435_012:0292b10_6": "嚴兮如月之清。",
    "X72n1435_012:0292b11_7": "慈兮如日之赫。",
    "X72n1435_012:0292b11_8": "行藏不與眾同流。",
    "X72n1435_012:0292b11_9": "善惡難教分皂白。",
    "X72n1435_012:0292b12_10": "茲因曇晦禪人勒逼將來。",
    "X72n1435_012:0292b12_11": "不免書此權為之塞責。",
    "X72n1435_012:0292b14_0": "者漢子沒來繇。",
    "X72n1435_012:0292b14_1": "擔閻浮重担。",
    "X72n1435_012:0292b14_2": "結眾生深仇。",
    "X72n1435_012:0292b14_3": "破鵞湖戒律。",
    "X72n1435_012:0292b15_4": "滅壽昌宗猷。",
    "X72n1435_012:0292b15_5": "心毒如砒。",
    "X72n1435_012:0292b15_6": "口甜如蜜。",
    "X72n1435_012:0292b15_7": "獰惡若虎。",
    "X72n1435_012:0292b15_8": "暴躁若猴。",
    "X72n1435_012:0292b16_9": "且道。",
    "X72n1435_012:0292b16_10": "是博山耶。",
    "X72n1435_012:0292b16_11": "非博山耶。",
    "X72n1435_012:0292b16_12": "依稀越國。",
    "X72n1435_012:0292b16_13": "彷彿揚州。",
    "X72n1435_012:0292b17_0": "者箇和尚。",
    "X72n1435_012:0292b17_1": "生平無狀。",
    "X72n1435_012:0292b17_2": "花擘佛祖之家私。",
    "X72n1435_012:0292b17_3": "敢受人天之供養。",
    "X72n1435_012:0292b18_4": "更問宗乘事若何。",
    "X72n1435_012:0292b18_5": "是聖是凡祇一棒。",
    "X72n1435_012:0292b19_0": "朱雲鶴居士。",
    "X72n1435_012:0292b19_1": "寫者漢作麼。",
    "X72n1435_012:0292b19_2": "說彼解談禪。",
    "X72n1435_012:0292b19_3": "開口便成墮。",
    "X72n1435_012:0292b20_0": "錯錯。",
    "X72n1435_012:0292b20_1": "溫州橘皮不是火。",
    "X72n1435_012:0292b21_0": "者箇臭乞兒。",
    "X72n1435_012:0292b21_1": "從來沒計較。",
    "X72n1435_012:0292b21_2": "舉步似安詳。",
    "X72n1435_012:0292b21_3": "開口便胡道。",
    "X72n1435_012:0292b22_0": "有時一喝。",
    "X72n1435_012:0292b22_1": "大海水也著乾。",
    "X72n1435_012:0292b22_2": "有時一脚。",
    "X72n1435_012:0292b22_3": "須彌山也著倒。",
    "X72n1435_012:0292b23_0": "今日寫上畫圖。",
    "X72n1435_012:0292b23_1": "一任傍人取笑。",
    "X72n1435_012:0292b23_2": "咄。",
    "X72n1435_012:0292b24_0": "素紙條墨。",
    "X72n1435_012:0292b24_1": "山重水重。",
    "X72n1435_012:0292b24_2": "邈無蹤跡。",
    "X72n1435_012:0292b24_3": "點綴虗空。",
    "X72n1435_012:0292b24_4": "一腔秋色。",
    "X72n1435_012:0292c01_0": "八面春風。",
    "X72n1435_012:0292c01_1": "葵誠徹見衷腸事。",
    "X72n1435_012:0292c01_2": "鼓打三更日正紅。",
    "X72n1435_012:0292c02_0": "鐵面老人。",
    "X72n1435_012:0292c02_1": "堪寫上紙。",
    "X72n1435_012:0292c02_2": "本是無形。",
    "X72n1435_012:0292c02_3": "長眉穿耳。",
    "X72n1435_012:0292c02_4": "弄假成真。",
    "X72n1435_012:0292c03_0": "逢嗔作喜。",
    "X72n1435_012:0292c03_1": "無端平地浪滔天。",
    "X72n1435_012:0292c03_2": "都把他鄉當故里。",
    "X72n1435_012:0292c04_0": "獨坐蒲團。",
    "X72n1435_012:0292c04_1": "想箇甚麼。",
    "X72n1435_012:0292c04_2": "瓶瀉雲興。",
    "X72n1435_012:0292c04_3": "說亦不破。",
    "X72n1435_012:0292c04_4": "有時喚作栢樹子。",
    "X72n1435_012:0292c05_5": "有時喚作訝郎當。",
    "X72n1435_012:0292c05_6": "有時喚作破竈墮。",
    "X72n1435_012:0292c05_7": "從緣返復百千名。",
    "X72n1435_012:0292c06_8": "地轉天旋祇者箇。",
    "X72n1435_012:0292c07_0": "此是博山。",
    "X72n1435_012:0292c07_1": "我是阿誰。",
    "X72n1435_012:0292c07_2": "我猶是我。",
    "X72n1435_012:0292c07_3": "用彼何為。",
    "X72n1435_012:0292c07_4": "識得斯人真面目。",
    "X72n1435_012:0292c08_5": "山頭敗葉幾成堆。",
    "X72n1435_012:0292c09_0": "者老禿奴。",
    "X72n1435_012:0292c09_1": "原非本像。",
    "X72n1435_012:0292c09_2": "坐破蒲團。",
    "X72n1435_012:0292c09_3": "是甚模樣。",
    "X72n1435_012:0292c09_4": "默默無言許自知。",
    "X72n1435_012:0292c10_5": "醜惡形骸誰比況。",
    "X72n1435_012:0292c10_6": "從來巾侍渠儂。",
    "X72n1435_012:0292c10_7": "識得昂藏去向。",
    "X72n1435_012:0292c11_8": "雖然忍受不與人傳。",
    "X72n1435_012:0292c11_9": "切莫認作本師和尚。",
    "X72n1435_012:0292c12_0": "兩條墨痕。",
    "X72n1435_012:0292c12_1": "那堪供養。",
    "X72n1435_012:0292c12_2": "真不似真。",
    "X72n1435_012:0292c12_3": "像亦非像。",
    "X72n1435_012:0292c12_4": "若要的見博山。",
    "X72n1435_012:0292c13_5": "眉毛祇在眼上。",
    "X72n1435_012:0292c14_0": "者漢癡獃。",
    "X72n1435_012:0292c14_1": "槁木死灰。",
    "X72n1435_012:0292c14_2": "箕踞若塑。",
    "X72n1435_012:0292c14_3": "怒發若雷。",
    "X72n1435_012:0292c14_4": "彌勒先生。",
    "X72n1435_012:0292c15_0": "釋迦後來。",
    "X72n1435_012:0292c15_1": "趂亦不去。",
    "X72n1435_012:0292c15_2": "喚亦不回。",
    "X72n1435_012:0292c15_3": "三尺絹子。",
    "X72n1435_012:0292c15_4": "活埋活埋。",
    "X72n1435_012:0292c16_0": "蔡闇脩公錯寫了。",
    "X72n1435_012:0292c16_1": "者漢有甚好。",
    "X72n1435_012:0292c16_2": "生平與佛祖。",
    "X72n1435_012:0292c16_3": "似箇生冤家。",
    "X72n1435_012:0292c17_4": "開口何曾談著句禪道。",
    "X72n1435_012:0292c17_5": "假說從廣南帶來鎮海明珠。",
    "X72n1435_012:0292c18_6": "元是江北盛烏盆底栲栳。",
    "X72n1435_012:0292c18_7": "你見他麤眉大眼。",
    "X72n1435_012:0292c18_8": "便被渠瞞。",
    "X72n1435_012:0292c19_9": "要見他臭爛肚腸。",
    "X72n1435_012:0292c19_10": "揑轉鼻頭。",
    "X72n1435_012:0292c19_11": "但向虗空討。",
    "X72n1435_012:0292c20_0": "此是何人。",
    "X72n1435_012:0292c20_1": "博山老朽。",
    "X72n1435_012:0292c20_2": "靜默無言。",
    "X72n1435_012:0292c20_3": "曰獅子吼。",
    "X72n1435_012:0292c20_4": "三心莫得。",
    "X72n1435_012:0292c21_0": "以建法幢。",
    "X72n1435_012:0292c21_1": "十指不干。",
    "X72n1435_012:0292c21_2": "而稱抖擻。",
    "X72n1435_012:0292c21_3": "內外搜尋蹤跡無。",
    "X72n1435_012:0292c21_4": "引得禪人顛倒走。",
    "X72n1435_012:0292c23_0": "面濶腮紅。",
    "X72n1435_012:0292c23_1": "眉麤眼大。",
    "X72n1435_012:0292c23_2": "別想機緣。",
    "X72n1435_012:0292c23_3": "悉皆迸破。",
    "X72n1435_012:0292c23_4": "觀身心等陽燄之騰。",
    "X72n1435_012:0292c24_5": "視富貴如空花之墮。",
    "X72n1435_012:0292c24_6": "吳少峯寫渠儂。",
    "X72n1435_012:0292c24_7": "休錯過。",
    "X72n1435_012:0293a01_8": "箇中一線之微。",
    "X72n1435_012:0293a01_9": "問取知非首座。",
    "X72n1435_012:0293a03_0": "無異禪師廣錄卷第十二"
}