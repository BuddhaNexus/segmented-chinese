[
    {
        "source_sentence": "文殊師利菩薩六字呪功能法經",
        "from": "T20n1179_001:0778b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無一切利益尊者文殊師利童子菩薩摩訶",
        "from": "T20n1179_001:0778b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩呪曰。闇婆計陀那上摩於此文殊師利",
        "from": "T20n1179_001:0778b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩六字呪功能法。",
        "from": "T20n1179_001:0778b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說。",
        "from": "T20n1179_001:0778b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人每日誦此呪七遍。",
        "from": "T20n1179_001:0778b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定罪業得除滅。",
        "from": "T20n1179_001:0778b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人能每日誦此呪一百八遍。",
        "from": "T20n1179_001:0778b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人臨命終時。",
        "from": "T20n1179_001:0778b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現前見文殊師利菩薩。",
        "from": "T20n1179_001:0778b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人受持此呪得成法者。",
        "from": "T20n1179_001:0778b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先食菜或食乳糜。",
        "from": "T20n1179_001:0778b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或食大麥子粥。",
        "from": "T20n1179_001:0778b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或食大麥󰉓或乞食。",
        "from": "T20n1179_001:0778b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日平旦日午日沒三時洗浴。",
        "from": "T20n1179_001:0778b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別著一具淨衣。",
        "from": "T20n1179_001:0778b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦此呪六十萬遍法即成就。",
        "from": "T20n1179_001:0778b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於後不割斷漊楨上。",
        "from": "T20n1179_001:0778b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其畫匠人受八戒。",
        "from": "T20n1179_001:0778b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不用膠畫文殊師利菩薩。",
        "from": "T20n1179_001:0778b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蓮華上座說法之像。",
        "from": "T20n1179_001:0778b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切莊嚴具足。",
        "from": "T20n1179_001:0778b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作童子形天衣褡左肩。",
        "from": "T20n1179_001:0778b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於右應畫作聖觀自在菩薩。",
        "from": "T20n1179_001:0778b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐蓮華座手執拂。",
        "from": "T20n1179_001:0778b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左邊應畫聖普賢菩薩。",
        "from": "T20n1179_001:0778b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像上兩邊虛空。",
        "from": "T20n1179_001:0778b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於雲中出呪仙手執花鬘作。",
        "from": "T20n1179_001:0778b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫像下應畫持呪人手執香爐。",
        "from": "T20n1179_001:0778b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞻仰文殊師利菩薩。",
        "from": "T20n1179_001:0778b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像四邊皆應作山峯。",
        "from": "T20n1179_001:0778b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩座下。",
        "from": "T20n1179_001:0778b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應作花池充滿蓮華。",
        "from": "T20n1179_001:0778b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已後於舍利塔前面向西。",
        "from": "T20n1179_001:0778b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安楨廣大供養已。",
        "from": "T20n1179_001:0778b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用蘇燃燈。",
        "from": "T20n1179_001:0778b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取闍提花一千八枚。",
        "from": "T20n1179_001:0778b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取一一花各呪一遍於像面散。",
        "from": "T20n1179_001:0778c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即有聲出聞微妙聲或楨動。",
        "from": "T20n1179_001:0778c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聞妙聲時得稱心。",
        "from": "T20n1179_001:0778c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若楨動時一切諍論中得勝。",
        "from": "T20n1179_001:0778c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間言教皆通達。",
        "from": "T20n1179_001:0778c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生皆愛樂。",
        "from": "T20n1179_001:0778c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不成此法。",
        "from": "T20n1179_001:0778c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘一切事業皆不得成就。",
        "from": "T20n1179_001:0778c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法沈香長八指任麁細。",
        "from": "T20n1179_001:0778c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蘇合香油塗。",
        "from": "T20n1179_001:0778c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於以却陀羅木炭無姻火中各呪一遍。",
        "from": "T20n1179_001:0778c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從初夜至明相出時燒。",
        "from": "T20n1179_001:0778c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見文殊師利菩薩親自來。",
        "from": "T20n1179_001:0778c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於呪師前隨所求皆與滿足。",
        "from": "T20n1179_001:0778c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除婬欲。",
        "from": "T20n1179_001:0778c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於楨前以檀香晝夜燒不斷。",
        "from": "T20n1179_001:0778c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪。",
        "from": "T20n1179_001:0778c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利菩薩親來。",
        "from": "T20n1179_001:0778c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說甚深法皆得勝解。",
        "from": "T20n1179_001:0778c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離一切病得自在。",
        "from": "T20n1179_001:0778c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得入菩薩地。",
        "from": "T20n1179_001:0778c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法以紫檀長六指剋作蓮華。",
        "from": "T20n1179_001:0778c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更研紫檀末和水。",
        "from": "T20n1179_001:0778c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗之誦百千遍。",
        "from": "T20n1179_001:0778c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至十五日夜滿月時。",
        "from": "T20n1179_001:0778c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於楨前取花葉兩手葉花誦呪。",
        "from": "T20n1179_001:0778c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於頂上光出即取其花。",
        "from": "T20n1179_001:0778c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼人成如二八十六歲人身相端嚴。",
        "from": "T20n1179_001:0778c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金色光明過於千日。",
        "from": "T20n1179_001:0778c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威光如天童子一切成就。",
        "from": "T20n1179_001:0778c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪仙皆恭敬壽命一劫。",
        "from": "T20n1179_001:0778c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫盡已後往生極樂世界。",
        "from": "T20n1179_001:0778c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於月蝕時。",
        "from": "T20n1179_001:0778c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取白昌蒲根。",
        "from": "T20n1179_001:0778c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿妹耶糞乳酪蘇。",
        "from": "T20n1179_001:0778c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比五和洗昌蒲根。",
        "from": "T20n1179_001:0778c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗已。",
        "from": "T20n1179_001:0778c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賓鉢羅樹葉果禮下安四葉上著三葉呪至或烟出或煖火焰出。",
        "from": "T20n1179_001:0778c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若煖氣時。",
        "from": "T20n1179_001:0778c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得眾生歡喜及一切論難皆勝。",
        "from": "T20n1179_001:0778c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若烟出時。",
        "from": "T20n1179_001:0778c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得安達底壽一萬年。",
        "from": "T20n1179_001:0778c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若火焰出得昇阿迦舍。",
        "from": "T20n1179_001:0778c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽一大劫。",
        "from": "T20n1179_001:0778c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取黃牛有犢子者。",
        "from": "T20n1179_001:0778c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攢乳酪取蘇置熟銅器中。",
        "from": "T20n1179_001:0778c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以賓鉢羅七葉覆之呪之。",
        "from": "T20n1179_001:0778c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上烟等三事成就。",
        "from": "T20n1179_001:0778c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即服此蘇。",
        "from": "T20n1179_001:0779a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或多聞或安達羅。",
        "from": "T20n1179_001:0779a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或昇阿迦舍。",
        "from": "T20n1179_001:0779a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取布央迦羅子於月蝕。",
        "from": "T20n1179_001:0779a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置日中含誦此呪。",
        "from": "T20n1179_001:0779a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至子動時。",
        "from": "T20n1179_001:0779a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取三種銅作珠作孔。",
        "from": "T20n1179_001:0779a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內子於珠孔中含住。",
        "from": "T20n1179_001:0779a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即安陀利出口。",
        "from": "T20n1179_001:0779a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見之。",
        "from": "T20n1179_001:0779a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取釘香口含。",
        "from": "T20n1179_001:0779a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪六十萬遍已。",
        "from": "T20n1179_001:0779a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨共人語所求皆得。",
        "from": "T20n1179_001:0779a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法食乳大麥子或󰉓。",
        "from": "T20n1179_001:0779a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪一百二十萬遍。",
        "from": "T20n1179_001:0779a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得成呪仙。",
        "from": "T20n1179_001:0779a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法乞食不得語。",
        "from": "T20n1179_001:0779a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿十萬遍得安達地多。",
        "from": "T20n1179_001:0779a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦呪滿一俱胝。",
        "from": "T20n1179_001:0779a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見聖者文殊師利菩薩如是說法。",
        "from": "T20n1179_001:0779a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定令得入一生補處大菩薩眾。",
        "from": "T20n1179_001:0779a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若每常誦此呪。",
        "from": "T20n1179_001:0779a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切蒙利皆得成就。",
        "from": "T20n1179_001:0779a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取安悉香擣末。",
        "from": "T20n1179_001:0779a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以蘇和為丸。",
        "from": "T20n1179_001:0779a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如小棗作十萬丸。",
        "from": "T20n1179_001:0779a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆呪一遍。",
        "from": "T20n1179_001:0779a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火中燒之至盡。",
        "from": "T20n1179_001:0779a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金錢十萬枚。",
        "from": "T20n1179_001:0779a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於流入海大河中。",
        "from": "T20n1179_001:0779a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一萬蓮華各呪一遍。",
        "from": "T20n1179_001:0779a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲置河中至盡。",
        "from": "T20n1179_001:0779a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼蓮華數量寶伏藏見。",
        "from": "T20n1179_001:0779a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其藏受用無盡。",
        "from": "T20n1179_001:0779a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法油麻以酪蘇和。",
        "from": "T20n1179_001:0779a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一撮各各呪一遍。",
        "from": "T20n1179_001:0779a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置火中至十萬遍。",
        "from": "T20n1179_001:0779a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人得財富。",
        "from": "T20n1179_001:0779a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能施與一切物。",
        "from": "T20n1179_001:0779a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取未墮地瞿妹耶泥地作壇。",
        "from": "T20n1179_001:0779a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種花散其上坐。",
        "from": "T20n1179_001:0779a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日誦呪一千八遍。",
        "from": "T20n1179_001:0779a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即讀大乘經。",
        "from": "T20n1179_001:0779a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至滿一月即得聰慧。",
        "from": "T20n1179_001:0779a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取牛黃呪一千八遍塗額上。",
        "from": "T20n1179_001:0779a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生見者皆歡喜。",
        "from": "T20n1179_001:0779a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上髮呪七遍結之。",
        "from": "T20n1179_001:0779a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡人不能損害。",
        "from": "T20n1179_001:0779a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取鷄知摩羅果一萬顆。",
        "from": "T20n1179_001:0779a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一呪一遍。",
        "from": "T20n1179_001:0779a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置火中燒至盡。",
        "from": "T20n1179_001:0779a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸病皆得除愈。",
        "from": "T20n1179_001:0779a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利菩薩六字呪法一卷以栂尾山高山寺之本。",
        "from": "T20n1179_001:0779a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於洛北大報恩寺遺教會之砌寫之。",
        "from": "T20n1179_001:0779a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八家錄云。",
        "from": "T20n1179_001:0779a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六字神呪經一卷。",
        "from": "T20n1179_001:0779a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "註云或云六字呪經。",
        "from": "T20n1179_001:0779a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞元。",
        "from": "T20n1179_001:0779a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵釋欠。",
        "from": "T20n1179_001:0779a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "註亦云六字呪法。",
        "from": "T20n1179_001:0779a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "題云文殊師利菩薩六字功能法。",
        "from": "T20n1179_001:0779b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薄草子二。",
        "from": "T20n1179_001:0779b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引用此經。",
        "from": "T20n1179_001:0779b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時天明五乙巳年二月八日　智積輪下東武慈忍識　享和改元仲秋八月。",
        "from": "T20n1179_001:0779b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請求慈忍師之本令寫之　當山慈心院傳燈等挍驗加。",
        "from": "T20n1179_001:0779b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訓予更再訂授於工公于天下。",
        "from": "T20n1179_001:0779b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豐山長谷總持蘭若沙門快道誌享和三年癸亥四月朔日一校加筆畢慈順",
        "from": "T20n1179_001:0779b07_100",
        "context_with_next_sentence": false
    }
]