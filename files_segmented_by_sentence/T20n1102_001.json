[
    {
        "source_sentence": "金剛頂經多羅菩薩念誦法一",
        "from": "T20n1102_001:0454a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卷",
        "from": "T20n1102_001:0454a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T20n1102_001:0454a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命瑜伽自在王　　善住如幻三昧者",
        "from": "T20n1102_001:0454a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普於淨染諸剎海　　能示種種隨類身",
        "from": "T20n1102_001:0454a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我依蓮華相應門　　開示多羅大悲法",
        "from": "T20n1102_001:0454a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令修習三昧者　　離於二乘無悲定",
        "from": "T20n1102_001:0454a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速具神通波羅蜜　　即能頓證如來位",
        "from": "T20n1102_001:0454a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者應發普賢心　　從師具受金剛戒",
        "from": "T20n1102_001:0454a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不顧身命起慈心　　乃能堪入解脫輪",
        "from": "T20n1102_001:0454a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應從師受三摩耶　　契印密語如經說",
        "from": "T20n1102_001:0454a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬阿闍梨如佛想　　於同學所殷重心",
        "from": "T20n1102_001:0454a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於山間阿練若　　流泉浴池悅意處",
        "from": "T20n1102_001:0454a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山峯石窟逈樹邊　　建立壇場如法則",
        "from": "T20n1102_001:0454a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴精室置本尊　　隨力供養一心住",
        "from": "T20n1102_001:0454b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍觀十方諸佛海　　懺悔發願皆如教",
        "from": "T20n1102_001:0454b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成三業金剛故　　當於二手舌心中",
        "from": "T20n1102_001:0454b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽字想成五智杵　　猶是加持能悉地",
        "from": "T20n1102_001:0454b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應結契名警覺　　二手皆作金剛拳",
        "from": "T20n1102_001:0454b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧相鉤竪進力　　二度相拄名起印",
        "from": "T20n1102_001:0454b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0454b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應敬禮阿閦尊　　捨身求請不退轉",
        "from": "T20n1102_001:0454b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌舒頂上　　全身著地以心禮",
        "from": "T20n1102_001:0454b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0454b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮南方寶生尊　　捨身求請灌頂位",
        "from": "T20n1102_001:0454b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌當於心　　以額著地虔誠禮",
        "from": "T20n1102_001:0454b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0454b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮觀自在王尊　　捨身求請三摩地",
        "from": "T20n1102_001:0454b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌置頂上　　以口著地虔心請",
        "from": "T20n1102_001:0454b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0454b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮不空成就尊　　捨身求請善巧智",
        "from": "T20n1102_001:0454b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌安於心　　以頂著地稽首請",
        "from": "T20n1102_001:0454c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0454c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次觀諸佛遍虛空　　當結持印普禮足",
        "from": "T20n1102_001:0454c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪慧檀智反相叉　　右膝著地置頂上",
        "from": "T20n1102_001:0454c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0454c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以成就妙真言　　普願眾生同悉地",
        "from": "T20n1102_001:0454c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來稱讚法　　當願加持速成就",
        "from": "T20n1102_001:0454c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0454c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當結加端身坐　　淨除三業令清淨",
        "from": "T20n1102_001:0454c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法本性清淨故　　願令自他悉無垢",
        "from": "T20n1102_001:0454c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0454c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華三昧耶　　十度相叉堅固縛",
        "from": "T20n1102_001:0454c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願竪合如蓮葉　　想身同彼多囉尊",
        "from": "T20n1102_001:0454c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0454c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結極喜三昧印　　定慧二羽堅固縛",
        "from": "T20n1102_001:0455a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍辱願度中交合　　檀慧禪智竪相著",
        "from": "T20n1102_001:0455a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當開心入佛智　　二乳加持怛囉吒",
        "from": "T20n1102_001:0455a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結金剛縛當心前　　三掣開心如啟扇",
        "from": "T20n1102_001:0455a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次觀蓮臺阿字門　　二點莊嚴成寂智",
        "from": "T20n1102_001:0455a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智屈入金剛縛　　召字流入於心中",
        "from": "T20n1102_001:0455a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結密合金剛拳　　以此加持使堅固",
        "from": "T20n1102_001:0455a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入印進力住禪智　　故能堅持不退失",
        "from": "T20n1102_001:0455a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華摧魔印　　以此淨除諸障難",
        "from": "T20n1102_001:0455a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以金剛合掌儀　　進力如牙竪禪智",
        "from": "T20n1102_001:0455a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內住慈心現威怒　　右旋三匝成界方",
        "from": "T20n1102_001:0455a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應端身住三昧　　二羽相叉為定印",
        "from": "T20n1102_001:0455a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空界塵身諸佛海　　警覺令觀真實心",
        "from": "T20n1102_001:0455a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀阿字為月輪　　重以真言使明顯",
        "from": "T20n1102_001:0455b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心本性清淨故　　應妙觀察金剛蓮",
        "from": "T20n1102_001:0455b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成清淨一相故　　漸令開敷同法界",
        "from": "T20n1102_001:0455b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得大悲三摩地　　悉能普淨眾生界",
        "from": "T20n1102_001:0455b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令三昧純熟故　　悉令延縮得自在",
        "from": "T20n1102_001:0455b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸歛智蓮量己身　　普發淨光照三昧",
        "from": "T20n1102_001:0455b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以堅固妙真言　　加持能令不傾動",
        "from": "T20n1102_001:0455b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空所現諸如來　　悉入覺華為一體",
        "from": "T20n1102_001:0455b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知等同於諸佛　　堅固菩提誓願身",
        "from": "T20n1102_001:0455b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀妙蓮為本尊　　其身淨滿綠金色",
        "from": "T20n1102_001:0455b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼妙寶為珠瓔　　寶冠首戴無量壽",
        "from": "T20n1102_001:0455b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右現殊勝與願印　　左以定手持青蓮",
        "from": "T20n1102_001:0455b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於三昧處月輪　　普放慈光照三界",
        "from": "T20n1102_001:0455b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以根本青蓮印　　心額喉頂遍加持",
        "from": "T20n1102_001:0455b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結寶印自灌頂　　二羽堅固金剛縛",
        "from": "T20n1102_001:0455c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力禪智如寶形　　額上加持繫頂後",
        "from": "T20n1102_001:0455c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手如垂鬘帶已　　便應自被堅固甲",
        "from": "T20n1102_001:0455c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結金剛拳舒進力　　唵砧二字想指面",
        "from": "T20n1102_001:0455c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心背臍腰及兩膝　　喉額頂後皆三遶",
        "from": "T20n1102_001:0455c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧前散垂天衣　　即能堅固無傾動",
        "from": "T20n1102_001:0455c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以二羽三相拍　　是名蓮華喜印儀",
        "from": "T20n1102_001:0455c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應嚴淨佛國土　　為欲奉事諸如來",
        "from": "T20n1102_001:0455c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀無盡香水海　　妙蓮上持華藏界",
        "from": "T20n1102_001:0455c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼寶殿以莊嚴　　出過諸天妙供具",
        "from": "T20n1102_001:0455c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空諸天為第五　　所欲皆從虛空生",
        "from": "T20n1102_001:0455c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心樂供養諸聖眾　　願令如意普圓滿",
        "from": "T20n1102_001:0455c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此真實加持已　　當結金剛合掌儀",
        "from": "T20n1102_001:0455c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶地莊嚴華座上　　咄弄二合字門成本尊",
        "from": "T20n1102_001:0455c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放淨光明超日月　　蓮華眷屬悉圍遶",
        "from": "T20n1102_001:0455c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以請召密方便　　召集尊身入智體",
        "from": "T20n1102_001:0455c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧二羽堅固縛　　進力二度屈出鉤",
        "from": "T20n1102_001:0455c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0455c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華索大印　　蓮掌智入進禪中",
        "from": "T20n1102_001:0456a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此密印及真言　　召請本尊能引入",
        "from": "T20n1102_001:0456a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結華手為鎖印　　進力禪智相鉤結",
        "from": "T20n1102_001:0456a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此蓮華止留印　　能令本尊堅固住",
        "from": "T20n1102_001:0456a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華鈴密印　　禪智屈入蓮華掌",
        "from": "T20n1102_001:0456a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此密印及真言　　能令本尊妙歡喜",
        "from": "T20n1102_001:0456a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以悅意妙伽陀　　捧持閼伽獻香水",
        "from": "T20n1102_001:0456a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙音遍至無邊界　　以此加持速成就",
        "from": "T20n1102_001:0456a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應廣設四內供　　華掌竪建禪智度",
        "from": "T20n1102_001:0456a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此蓮華嬉戲故　　能滿檀那波羅蜜",
        "from": "T20n1102_001:0456a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華鬘密印　　以蓮華掌前申臂",
        "from": "T20n1102_001:0456a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由獻華鬘供養故　　當滿淨戒波羅蜜",
        "from": "T20n1102_001:0456b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華歌詠印　　華掌從臍至口散",
        "from": "T20n1102_001:0456b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻此如來妙法音　　能滿安忍波羅蜜",
        "from": "T20n1102_001:0456b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華舞供養　　華手旋舞置於頂",
        "from": "T20n1102_001:0456b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此密印及真言　　速具精進波羅蜜",
        "from": "T20n1102_001:0456b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華焚香印　　華掌下散如焚香",
        "from": "T20n1102_001:0456b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此梵香印威力　　當證靜慮波羅蜜",
        "from": "T20n1102_001:0456b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華華供養　　蓮掌上散如獻華",
        "from": "T20n1102_001:0456b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由獻妙華莊嚴故　　速證般若波羅蜜",
        "from": "T20n1102_001:0456b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華燈明印　　禪智前逼蓮華手",
        "from": "T20n1102_001:0456b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此燈明供養故　　當滿方便波羅蜜",
        "from": "T20n1102_001:0456b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華塗香印　　散掌心上如塗香",
        "from": "T20n1102_001:0456b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此真言密印儀　　能滿誓願波羅蜜",
        "from": "T20n1102_001:0456b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結本尊根本印　　以印加持自心上",
        "from": "T20n1102_001:0456c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽智拳節相背　　進力禪智竪相合",
        "from": "T20n1102_001:0456c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結不空多羅心　　以印加持於額上",
        "from": "T20n1102_001:0456c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "準前根本祕印相　　改竪檀慧令相著",
        "from": "T20n1102_001:0456c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結本尊寶冠印　　以此大印置頂上",
        "from": "T20n1102_001:0456c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "準前心印竪忍願　　進力遠屈二度背",
        "from": "T20n1102_001:0456c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結真實加持印　　以此能召於一切",
        "from": "T20n1102_001:0456c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "準前灌頂寶冠印　　唯以精進度去來",
        "from": "T20n1102_001:0456c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結摧壞諸魔印　　以此能伏難調者",
        "from": "T20n1102_001:0456c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "準前灌頂寶冠印　　直申力度右旋遶",
        "from": "T20n1102_001:0456c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0456c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以字門布己身　　唵字頂上哆安額",
        "from": "T20n1102_001:0456c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𠼝字兩目咄二肩　　哆字當心𠼝當臍",
        "from": "T20n1102_001:0456c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咄字二膝𠼝二脛　　薩嚩二合左足訶",
        "from": "T20n1102_001:0456c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明引尊入己身　　以此加持無二體",
        "from": "T20n1102_001:0457a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應結青蓮根本印　　稱誦蓮華百字明",
        "from": "T20n1102_001:0457a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧二羽內相叉　　進力禪智竪相拄",
        "from": "T20n1102_001:0457a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0457a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱誦百字真言已　　不解前印念本明",
        "from": "T20n1102_001:0457a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0457a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以真言加珠鬘　　頂上捧戴當心念",
        "from": "T20n1102_001:0457a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0457a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦持數限終竟已　　復獻閼伽誦妙讚",
        "from": "T20n1102_001:0457a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重設八供發願已　　解界想尊還本宮",
        "from": "T20n1102_001:0457a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結前蓮華三昧耶　　頂上散華便禮足",
        "from": "T20n1102_001:0457a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1102_001:0457a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以奉送諸本尊已　　加持灌頂被甲冑",
        "from": "T20n1102_001:0457b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅住本尊三摩地　　自恣住止或經行",
        "from": "T20n1102_001:0457b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應轉讀摩訶衍　　常令淨業恒不間",
        "from": "T20n1102_001:0457b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得多羅親現前　　所求勝願皆圓滿",
        "from": "T20n1102_001:0457b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世得入歡喜地　　十六生後成菩提",
        "from": "T20n1102_001:0457b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛頂經多羅菩薩念誦法一卷",
        "from": "T20n1102_001:0457b10_100",
        "context_with_next_sentence": false
    }
]