[
    {
        "source_sentence": "佛說普賢菩薩陀羅尼經",
        "from": "T20n1127_001:0541c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T20n1127_001:0541c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教大師臣法天奉　詔譯",
        "from": "T20n1127_001:0541c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依普遍虛空界　　三世清淨平等因",
        "from": "T20n1127_001:0541c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性等法光正覺道　　變化人天利樂身",
        "from": "T20n1127_001:0541c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示居十地自在位　　行大施願度眾生",
        "from": "T20n1127_001:0541c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德相嚴名普賢　　今說真言祕密教",
        "from": "T20n1127_001:0542a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時普賢菩薩摩訶薩。",
        "from": "T20n1127_001:0542a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲現廣大變化而入三摩地。",
        "from": "T20n1127_001:0542a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名三界大自在。",
        "from": "T20n1127_001:0542a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入此三摩地已。",
        "from": "T20n1127_001:0542a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從清淨虛空界。",
        "from": "T20n1127_001:0542a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現無數身猶如塵沙。",
        "from": "T20n1127_001:0542a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍大千一切世界。",
        "from": "T20n1127_001:0542a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時一切佛剎所有一切如來。",
        "from": "T20n1127_001:0542a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒其右手摩普賢菩薩摩訶薩頂。",
        "from": "T20n1127_001:0542a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚言善哉善哉佛子。",
        "from": "T20n1127_001:0542a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今當說一切佛母最上陀羅尼法。",
        "from": "T20n1127_001:0542a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時普賢菩薩。",
        "from": "T20n1127_001:0542a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身放千光普照十方。",
        "from": "T20n1127_001:0542a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛剎悉皆震動。",
        "from": "T20n1127_001:0542a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼。",
        "from": "T20n1127_001:0542a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合他引唵引曩謨引曩摩娑怛嚩二合部嚩儞引濕嚩二合囉摩賀引部引誐引野阿三摩三摩阿彌哆娑摩阿難陀娑摩誐誐曩娑摩怛里二合婆嚩娑摩引尾引沙娑摩波囉摩引囉他二合娑摩娑嚩二合婆引嚩娑摩怛他引誐哆娑摩阿囉惹娑摩輸弟娑摩沒馱娑摩達里摩二合怛他引誐哆引娑摩僧賀尾沙摩娑摩曀迦曩野娑引誐囉尾輸馱引路引迦呬呬羅沒馱二合羅沒馱二合尾惹野尾惹野暗引鉢囉二合設訖哆二合曩野引曩野憾唧囉引地瑟吒二合曩三部引誐暗娑曩引羅野引羅野達里摩二合引誐囉二合馱囉馱囉惹野惹野吽吽馱摩馱摩娑嚩二合引賀引爾時普賢菩薩摩訶薩。",
        "from": "T20n1127_001:0542a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼已。",
        "from": "T20n1127_001:0542a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即觀彼菩薩之身。",
        "from": "T20n1127_001:0542a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是過去先佛。",
        "from": "T20n1127_001:0542a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為悲慜一切眾生現變化身。",
        "from": "T20n1127_001:0542a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿於三界諸世間中。",
        "from": "T20n1127_001:0542a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時諸大菩薩。",
        "from": "T20n1127_001:0542a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及天人阿修羅等。",
        "from": "T20n1127_001:0542a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一切金剛峰起。",
        "from": "T20n1127_001:0542a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離自金寶莊嚴大富貴座。",
        "from": "T20n1127_001:0542a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來菩薩前而自唱言。",
        "from": "T20n1127_001:0542a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無大慈大悲無邊大功德海最上成佛大陀羅尼法。",
        "from": "T20n1127_001:0542b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能饒益過去未來現在三界無數眾生。",
        "from": "T20n1127_001:0542b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得安住大法之位。",
        "from": "T20n1127_001:0542b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若人聞此大陀羅尼法。",
        "from": "T20n1127_001:0542b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經無邊劫所作之罪皆悉除滅。",
        "from": "T20n1127_001:0542b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能枯竭煩惱大海。",
        "from": "T20n1127_001:0542b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧壞我見高山。",
        "from": "T20n1127_001:0542b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人見百千佛。",
        "from": "T20n1127_001:0542b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經無邊劫所作善根。",
        "from": "T20n1127_001:0542b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不能及此真言功德。",
        "from": "T20n1127_001:0542b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大陀羅尼是一切如來心圓滿大功德海。",
        "from": "T20n1127_001:0542b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能出生菩提智種。",
        "from": "T20n1127_001:0542b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就一切智地。",
        "from": "T20n1127_001:0542b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而諸佛法皆不能及。",
        "from": "T20n1127_001:0542b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大陀羅尼名號。",
        "from": "T20n1127_001:0542b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使百千那由他俱胝劫亦難得聞。",
        "from": "T20n1127_001:0542b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人於此經典。",
        "from": "T20n1127_001:0542b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦恭敬供養。",
        "from": "T20n1127_001:0542b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等眾生善解總持。",
        "from": "T20n1127_001:0542b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能活慧命住如來位。",
        "from": "T20n1127_001:0542b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就一切功德。",
        "from": "T20n1127_001:0542b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人讀誦此經。",
        "from": "T20n1127_001:0542b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍二遍乃至三遍。",
        "from": "T20n1127_001:0542b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人得最上功德。",
        "from": "T20n1127_001:0542b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅一切罪能斷一切煩惱。",
        "from": "T20n1127_001:0542b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得值遇諸佛如來。",
        "from": "T20n1127_001:0542b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不受一切憂愁苦惱。",
        "from": "T20n1127_001:0542b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於寂靜之處獨樹之下。",
        "from": "T20n1127_001:0542b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心持誦。",
        "from": "T20n1127_001:0542b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人獲得一切成就之法眾所愛敬。",
        "from": "T20n1127_001:0542b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人於大林野結跏趺坐。",
        "from": "T20n1127_001:0542b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此經典滿於七邊。",
        "from": "T20n1127_001:0542b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人不久得大禪定。",
        "from": "T20n1127_001:0542b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷一切煩惱。",
        "from": "T20n1127_001:0542b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得普賢菩薩結跏趺坐而現於前。",
        "from": "T20n1127_001:0542b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人隨自力分以香華供養誦此陀羅尼。",
        "from": "T20n1127_001:0542b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至困臥睡眠。",
        "from": "T20n1127_001:0542b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其夢中見普賢菩薩。",
        "from": "T20n1127_001:0542b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒其右手放法光明。",
        "from": "T20n1127_001:0542b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌照身心作如是言。",
        "from": "T20n1127_001:0542b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉佛子。",
        "from": "T20n1127_001:0542b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大曼拏羅轉身。",
        "from": "T20n1127_001:0542b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得大菩薩位。",
        "from": "T20n1127_001:0542b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心安樂。",
        "from": "T20n1127_001:0542b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具大福德智慧。",
        "from": "T20n1127_001:0542b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得見於普賢菩薩摩訶薩。",
        "from": "T20n1127_001:0542b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人以慈悲心。",
        "from": "T20n1127_001:0542b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切眾生讀誦此經。",
        "from": "T20n1127_001:0542b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人得十波羅蜜圓滿。",
        "from": "T20n1127_001:0542b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅除一切煩惱罪垢。",
        "from": "T20n1127_001:0542b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得天人衛護如來讚言。",
        "from": "T20n1127_001:0542b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子汝若依行。",
        "from": "T20n1127_001:0542b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當入普賢之地。",
        "from": "T20n1127_001:0542b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說普賢菩薩陀羅尼經",
        "from": "T20n1127_001:0542b28_100",
        "context_with_next_sentence": false
    }
]