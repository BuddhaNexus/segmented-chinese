{
    "X79n1560_009:0509c09_0": "禪林僧寶傳卷第九",
    "X79n1560_009:0509c11_0": "宋明白庵居沙門　惠洪　撰",
    "X79n1560_009:0509c12_0": "龍牙居遯禪師",
    "X79n1560_009:0509c13_0": "禪師名居遯。",
    "X79n1560_009:0509c13_1": "生於郭氏。",
    "X79n1560_009:0509c13_2": "撫州南城人也。",
    "X79n1560_009:0509c13_3": "年十四。",
    "X79n1560_009:0509c13_4": "依吉州滿田寺剃落。",
    "X79n1560_009:0509c14_5": "又六年詣嵩嶽受具。",
    "X79n1560_009:0509c14_6": "遯風骨癯。",
    "X79n1560_009:0509c14_7": "甚視瞻凝。",
    "X79n1560_009:0509c15_8": "遠性夷粹語論英發。",
    "X79n1560_009:0509c15_9": "初謁翠微不契。",
    "X79n1560_009:0509c15_10": "至臨濟亦不契。",
    "X79n1560_009:0509c16_11": "乃造洞山悟本价禪師。",
    "X79n1560_009:0509c16_12": "問如何是祖師西來意。",
    "X79n1560_009:0509c17_0": "价曰。",
    "X79n1560_009:0509c17_1": "待洞水逆流即告汝道。",
    "X79n1560_009:0509c17_2": "遯豁然大悟。",
    "X79n1560_009:0509c17_3": "研味其旨。",
    "X79n1560_009:0509c18_0": "悲欣交集。",
    "X79n1560_009:0509c18_1": "服勤八年。",
    "X79n1560_009:0509c18_2": "日增智證。",
    "X79n1560_009:0509c18_3": "价稱其能。",
    "X79n1560_009:0509c18_4": "馬氏方據有長沙。",
    "X79n1560_009:0509c19_5": "興崇梵坊。",
    "X79n1560_009:0509c19_6": "聞遯名請。",
    "X79n1560_009:0509c19_7": "說法于龍牙法濟禪寺。",
    "X79n1560_009:0509c20_0": "僧問。",
    "X79n1560_009:0509c20_1": "如何是道遯曰無異人心。",
    "X79n1560_009:0509c20_2": "又曰。",
    "X79n1560_009:0509c20_3": "夫言修道者。",
    "X79n1560_009:0509c20_4": "此是勸諭之詞。",
    "X79n1560_009:0509c21_5": "接引之語。",
    "X79n1560_009:0509c21_6": "從上已來。",
    "X79n1560_009:0509c21_7": "無法與人。",
    "X79n1560_009:0509c21_8": "只是相承種種方便。",
    "X79n1560_009:0509c22_9": "為說出意旨。",
    "X79n1560_009:0509c22_10": "令識自心。",
    "X79n1560_009:0509c22_11": "究竟無法可得。",
    "X79n1560_009:0509c23_0": "無道可修。",
    "X79n1560_009:0509c23_1": "故云菩提道自然。",
    "X79n1560_009:0509c23_2": "今言法者。",
    "X79n1560_009:0509c23_3": "是軌持之名。",
    "X79n1560_009:0509c24_0": "道是眾生體性。",
    "X79n1560_009:0509c24_1": "未有世界。",
    "X79n1560_009:0509c24_2": "早有此性。",
    "X79n1560_009:0509c24_3": "世界壞時。",
    "X79n1560_009:0509c24_4": "此性不滅。",
    "X79n1560_009:0510a01_5": "喚作隨流之性。",
    "X79n1560_009:0510a01_6": "常無變易。",
    "X79n1560_009:0510a01_7": "作麼生可持以與人。",
    "X79n1560_009:0510a02_0": "又可作意。",
    "X79n1560_009:0510a02_1": "而修得哉。",
    "X79n1560_009:0510a02_2": "僧又問。",
    "X79n1560_009:0510a02_3": "如何是祖師西來意。",
    "X79n1560_009:0510a02_4": "遯曰。",
    "X79n1560_009:0510a03_5": "待石烏龜解語。",
    "X79n1560_009:0510a03_6": "即向汝道。",
    "X79n1560_009:0510a03_7": "進曰。",
    "X79n1560_009:0510a03_8": "石龜語也。",
    "X79n1560_009:0510a03_9": "曰。",
    "X79n1560_009:0510a03_10": "向汝道什麼。",
    "X79n1560_009:0510a04_11": "其僧亦悟。",
    "X79n1560_009:0510a04_12": "又僧問。",
    "X79n1560_009:0510a04_13": "大庾嶺提不起時如何。",
    "X79n1560_009:0510a04_14": "遯曰。",
    "X79n1560_009:0510a05_15": "六祖為什麼將得去。",
    "X79n1560_009:0510a05_16": "又問。",
    "X79n1560_009:0510a05_17": "維摩掌擎世界。",
    "X79n1560_009:0510a05_18": "未審維摩在什麼處立。",
    "X79n1560_009:0510a06_19": "遯曰。",
    "X79n1560_009:0510a06_20": "汝道維摩掌擎世界。",
    "X79n1560_009:0510a06_21": "其對機峻峭無滲漏類如此。",
    "X79n1560_009:0510a07_22": "偽梁龍德五年癸未八月示疾。",
    "X79n1560_009:0510a07_23": "九月十三日夜半。",
    "X79n1560_009:0510a08_24": "有大星殞于方丈前。",
    "X79n1560_009:0510a08_25": "詰旦加趺而化。",
    "X79n1560_009:0510a09_0": "閱世八十有九。",
    "X79n1560_009:0510a09_1": "坐六十有九夏。",
    "X79n1560_009:0510a10_0": "贊曰。",
    "X79n1560_009:0510a10_1": "予觀龍牙偈曰。",
    "X79n1560_009:0510a10_2": "學道先須有悟由。",
    "X79n1560_009:0510a10_3": "還如曾鬬快龍舟。",
    "X79n1560_009:0510a11_4": "雖然舊閣閑田地。",
    "X79n1560_009:0510a11_5": "一度嬴來方始休。",
    "X79n1560_009:0510a11_6": "君若隨緣得似風。",
    "X79n1560_009:0510a12_7": "吹沙走石不勞功。",
    "X79n1560_009:0510a12_8": "但於事上通無事。",
    "X79n1560_009:0510a12_9": "見色聞聲不用聾。",
    "X79n1560_009:0510a13_10": "皆清深精密。",
    "X79n1560_009:0510a13_11": "如其為人。",
    "X79n1560_009:0510a13_12": "疑問翠微臨濟祖意。",
    "X79n1560_009:0510a14_13": "度禪板蒲團。",
    "X79n1560_009:0510a14_14": "機語在已見洞山之後。",
    "X79n1560_009:0510a14_15": "雪竇以瞎龍死水罪之。",
    "X79n1560_009:0510a15_16": "龍牙聞之必大笑。",
    "X79n1560_009:0510a16_0": "永明智覺禪師",
    "X79n1560_009:0510a17_0": "智覺禪師者。",
    "X79n1560_009:0510a17_1": "諱延壽。",
    "X79n1560_009:0510a17_2": "餘杭王氏子。",
    "X79n1560_009:0510a17_3": "自其兒稚。",
    "X79n1560_009:0510a17_4": "知敬佛乘。",
    "X79n1560_009:0510a18_5": "及冠日一食。",
    "X79n1560_009:0510a18_6": "誦法華經。",
    "X79n1560_009:0510a18_7": "五行俱下。",
    "X79n1560_009:0510a18_8": "誦六十日而畢。",
    "X79n1560_009:0510a19_0": "有羊群跪而聽。",
    "X79n1560_009:0510a19_1": "年二十八。",
    "X79n1560_009:0510a19_2": "為華亭鎮將。",
    "X79n1560_009:0510a19_3": "甞舟而歸錢塘。",
    "X79n1560_009:0510a20_4": "見漁船萬尾戢戢。",
    "X79n1560_009:0510a20_5": "惻然意折。",
    "X79n1560_009:0510a20_6": "以錢易之。",
    "X79n1560_009:0510a20_7": "放于江。",
    "X79n1560_009:0510a20_8": "裂縫掖。",
    "X79n1560_009:0510a21_9": "投翠嵓永明禪師岑公。",
    "X79n1560_009:0510a21_10": "學出世法。",
    "X79n1560_009:0510a21_11": "會岑遷止龍冊寺。",
    "X79n1560_009:0510a22_12": "吳越文穆王。",
    "X79n1560_009:0510a22_13": "聞其風悅慕。",
    "X79n1560_009:0510a22_14": "聽其棄家。",
    "X79n1560_009:0510a22_15": "為剃髮。",
    "X79n1560_009:0510a22_16": "自受具。",
    "X79n1560_009:0510a23_17": "衣不繒纊。",
    "X79n1560_009:0510a23_18": "食無重味。",
    "X79n1560_009:0510a23_19": "持頭陀行。",
    "X79n1560_009:0510a23_20": "甞習定天台天柱峯之下。",
    "X79n1560_009:0510a24_21": "有烏類尺鷃巢衣襵中。",
    "X79n1560_009:0510a24_22": "時韶國師眼目出間。",
    "X79n1560_009:0510b01_23": "北面而師事之。",
    "X79n1560_009:0510b01_24": "韶曰。",
    "X79n1560_009:0510b01_25": "汝與元帥有緣。",
    "X79n1560_009:0510b01_26": "它日大作佛事。",
    "X79n1560_009:0510b02_27": "惜吾不及見耳。",
    "X79n1560_009:0510b02_28": "初說法於雪竇山。",
    "X79n1560_009:0510b02_29": "建隆元年。",
    "X79n1560_009:0510b02_30": "忠懿王移之。",
    "X79n1560_009:0510b03_31": "于靈隱新寺。",
    "X79n1560_009:0510b03_32": "為第一世。",
    "X79n1560_009:0510b03_33": "明年又移之。",
    "X79n1560_009:0510b03_34": "于永明寺。",
    "X79n1560_009:0510b04_35": "為第二世。",
    "X79n1560_009:0510b04_36": "眾至二千人。",
    "X79n1560_009:0510b04_37": "時號慈氏下生。",
    "X79n1560_009:0510b04_38": "指法以佛祖之語為銓準。",
    "X79n1560_009:0510b05_39": "曰迦葉波初聞偈曰。",
    "X79n1560_009:0510b05_40": "諸法從緣生。",
    "X79n1560_009:0510b05_41": "諸法從緣滅。",
    "X79n1560_009:0510b06_42": "我師大沙門。",
    "X79n1560_009:0510b06_43": "甞作如是說。",
    "X79n1560_009:0510b06_44": "此佛祖骨髓也。",
    "X79n1560_009:0510b07_0": "龍勝曰。",
    "X79n1560_009:0510b07_1": "無物從緣生。",
    "X79n1560_009:0510b07_2": "無物從緣滅。",
    "X79n1560_009:0510b07_3": "起唯諸緣起。",
    "X79n1560_009:0510b07_4": "滅唯諸緣滅。",
    "X79n1560_009:0510b08_5": "乃知色生時但是空生。",
    "X79n1560_009:0510b08_6": "色滅時但是空滅。",
    "X79n1560_009:0510b08_7": "譬如風性本不動。",
    "X79n1560_009:0510b09_8": "以緣起故動。",
    "X79n1560_009:0510b09_9": "儻風本性動。",
    "X79n1560_009:0510b09_10": "則寧有靜時哉。",
    "X79n1560_009:0510b10_11": "密室中若有風。",
    "X79n1560_009:0510b10_12": "風何不動。",
    "X79n1560_009:0510b10_13": "若無風遇緣即起。",
    "X79n1560_009:0510b10_14": "非特風為然。",
    "X79n1560_009:0510b11_15": "一切法皆然。",
    "X79n1560_009:0510b11_16": "維摩謂文殊師利曰。",
    "X79n1560_009:0510b11_17": "不來相而來。",
    "X79n1560_009:0510b12_18": "不見相而見。",
    "X79n1560_009:0510b12_19": "文殊乃曰。",
    "X79n1560_009:0510b12_20": "如是居士。",
    "X79n1560_009:0510b12_21": "若來已更不來。",
    "X79n1560_009:0510b13_22": "若去已更不去。",
    "X79n1560_009:0510b13_23": "所以者何。",
    "X79n1560_009:0510b13_24": "來者無所從來。",
    "X79n1560_009:0510b13_25": "去者無所至。",
    "X79n1560_009:0510b14_26": "所可見者。",
    "X79n1560_009:0510b14_27": "更不可見。",
    "X79n1560_009:0510b14_28": "此緣起無生之旨也。",
    "X79n1560_009:0510b14_29": "僧問。",
    "X79n1560_009:0510b15_0": "長沙偈曰。",
    "X79n1560_009:0510b15_1": "學道之人未識真。",
    "X79n1560_009:0510b15_2": "只為從來認識神。",
    "X79n1560_009:0510b15_3": "無始時來生死本。",
    "X79n1560_009:0510b16_4": "癡人喚作本來人。",
    "X79n1560_009:0510b16_5": "豈離識性別有真心耶。",
    "X79n1560_009:0510b17_6": "智覺曰。",
    "X79n1560_009:0510b17_7": "如來世尊於首楞嚴會上。",
    "X79n1560_009:0510b17_8": "為阿難揀別詳矣。",
    "X79n1560_009:0510b18_9": "而汝猶故不信。",
    "X79n1560_009:0510b18_10": "阿難以推窮。",
    "X79n1560_009:0510b18_11": "尋逐者為心。",
    "X79n1560_009:0510b18_12": "遭佛呵之。",
    "X79n1560_009:0510b19_13": "推窮尋逐者識也。",
    "X79n1560_009:0510b19_14": "若以識法隨相。",
    "X79n1560_009:0510b19_15": "行則煩惱。",
    "X79n1560_009:0510b19_16": "名識不名心也。",
    "X79n1560_009:0510b20_17": "意者憶也。",
    "X79n1560_009:0510b20_18": "憶想前境。",
    "X79n1560_009:0510b20_19": "起於妄。",
    "X79n1560_009:0510b20_20": "並是妄識。",
    "X79n1560_009:0510b20_21": "不干心事。",
    "X79n1560_009:0510b21_22": "心非有無。",
    "X79n1560_009:0510b21_23": "有無不染。",
    "X79n1560_009:0510b21_24": "心非垢淨。",
    "X79n1560_009:0510b21_25": "垢淨不汙。",
    "X79n1560_009:0510b21_26": "乃至迷悟凡聖。",
    "X79n1560_009:0510b22_27": "行住坐臥。",
    "X79n1560_009:0510b22_28": "竝是妄識非心也。",
    "X79n1560_009:0510b22_29": "心本不生。",
    "X79n1560_009:0510b23_0": "今亦不滅。",
    "X79n1560_009:0510b23_1": "若知自心如此。",
    "X79n1560_009:0510b23_2": "於諸佛亦然。",
    "X79n1560_009:0510b23_3": "故維摩曰。",
    "X79n1560_009:0510b23_4": "直心是道場。",
    "X79n1560_009:0510b24_5": "無虗假故。",
    "X79n1560_009:0510b24_6": "智覺以一代時教。",
    "X79n1560_009:0510b24_7": "流傳此土。",
    "X79n1560_009:0510b24_8": "不見大全。",
    "X79n1560_009:0510c01_9": "而天台賢首慈恩。",
    "X79n1560_009:0510c01_10": "性相三宗。",
    "X79n1560_009:0510c01_11": "又互相矛盾。",
    "X79n1560_009:0510c01_12": "乃為重閣。",
    "X79n1560_009:0510c02_13": "舘三宗知法比丘。",
    "X79n1560_009:0510c02_14": "更相設難。",
    "X79n1560_009:0510c02_15": "至波險處。",
    "X79n1560_009:0510c02_16": "以心宗旨要。",
    "X79n1560_009:0510c03_17": "折中之。",
    "X79n1560_009:0510c03_18": "因集方等秘經六十部。",
    "X79n1560_009:0510c03_19": "西天此土。",
    "X79n1560_009:0510c03_20": "聖賢之語三百家。",
    "X79n1560_009:0510c04_21": "以佐三宗之義。",
    "X79n1560_009:0510c04_22": "為一百卷。",
    "X79n1560_009:0510c04_23": "號宗鏡錄。",
    "X79n1560_009:0510c05_0": "天下學者傳誦焉。",
    "X79n1560_009:0510c05_1": "僧問。",
    "X79n1560_009:0510c05_2": "如和尚所論宗鏡。",
    "X79n1560_009:0510c05_3": "唯立一心之旨。",
    "X79n1560_009:0510c06_4": "能攝無量法門。",
    "X79n1560_009:0510c06_5": "此心含一切法耶。",
    "X79n1560_009:0510c06_6": "生一切法耶。",
    "X79n1560_009:0510c07_0": "若生者。",
    "X79n1560_009:0510c07_1": "是自生歟。",
    "X79n1560_009:0510c07_2": "從他而生歟。",
    "X79n1560_009:0510c07_3": "共生無因而生歟。",
    "X79n1560_009:0510c07_4": "答曰。",
    "X79n1560_009:0510c08_5": "此心不縱不橫。",
    "X79n1560_009:0510c08_6": "非他非自。",
    "X79n1560_009:0510c08_7": "何以知之。",
    "X79n1560_009:0510c08_8": "若言含一切法。",
    "X79n1560_009:0510c09_9": "即是橫。",
    "X79n1560_009:0510c09_10": "若言生一切法。",
    "X79n1560_009:0510c09_11": "即是縱。",
    "X79n1560_009:0510c09_12": "若言自生。",
    "X79n1560_009:0510c09_13": "則心豈復生心乎。",
    "X79n1560_009:0510c10_14": "若言他生。",
    "X79n1560_009:0510c10_15": "即不得自。",
    "X79n1560_009:0510c10_16": "矧曰有他乎。",
    "X79n1560_009:0510c10_17": "若言共生。",
    "X79n1560_009:0510c11_18": "則自他尚無有。",
    "X79n1560_009:0510c11_19": "以何為共哉。",
    "X79n1560_009:0510c11_20": "若言無因而生者。",
    "X79n1560_009:0510c11_21": "當思有因。",
    "X79n1560_009:0510c12_22": "尚不許言生。",
    "X79n1560_009:0510c12_23": "況曰無因哉。",
    "X79n1560_009:0510c12_24": "僧曰。",
    "X79n1560_009:0510c12_25": "審非四性所生。",
    "X79n1560_009:0510c13_26": "則世尊云何說。",
    "X79n1560_009:0510c13_27": "意根生意識。",
    "X79n1560_009:0510c13_28": "心如世畫師。",
    "X79n1560_009:0510c13_29": "無不從心造。",
    "X79n1560_009:0510c14_30": "然則豈非自生乎。",
    "X79n1560_009:0510c14_31": "又說心不孤起。",
    "X79n1560_009:0510c14_32": "必藉緣而起。",
    "X79n1560_009:0510c15_0": "有緣思生。",
    "X79n1560_009:0510c15_1": "無緣思不生。",
    "X79n1560_009:0510c15_2": "則豈非他生乎。",
    "X79n1560_009:0510c15_3": "又說。",
    "X79n1560_009:0510c15_4": "所言六觸。",
    "X79n1560_009:0510c16_5": "因緣生六受。",
    "X79n1560_009:0510c16_6": "得一切法。",
    "X79n1560_009:0510c16_7": "然則豈非共生乎。",
    "X79n1560_009:0510c16_8": "又說。",
    "X79n1560_009:0510c16_9": "十二因緣。",
    "X79n1560_009:0510c17_10": "非佛天人修羅作。",
    "X79n1560_009:0510c17_11": "性自爾故。",
    "X79n1560_009:0510c17_12": "然則豈非無因而生乎。",
    "X79n1560_009:0510c18_13": "智覺笑曰。",
    "X79n1560_009:0510c18_14": "諸佛隨緣差別。",
    "X79n1560_009:0510c18_15": "俯應群機。",
    "X79n1560_009:0510c18_16": "生善破惡。",
    "X79n1560_009:0510c19_17": "令入第一義諦。",
    "X79n1560_009:0510c19_18": "是四種悉檀。",
    "X79n1560_009:0510c19_19": "方便之語。",
    "X79n1560_009:0510c19_20": "如以空拳示小兒耳。",
    "X79n1560_009:0510c20_21": "豈有實法哉。",
    "X79n1560_009:0510c20_22": "僧曰。",
    "X79n1560_009:0510c20_23": "然則一切法是心否。",
    "X79n1560_009:0510c20_24": "曰若是即成二。",
    "X79n1560_009:0510c21_25": "僧曰。",
    "X79n1560_009:0510c21_26": "審爾則一切不立。",
    "X79n1560_009:0510c21_27": "俱非耶。",
    "X79n1560_009:0510c21_28": "曰非亦成二。",
    "X79n1560_009:0510c22_29": "汝豈不聞首楞嚴曰。",
    "X79n1560_009:0510c22_30": "我真文殊無是文殊。",
    "X79n1560_009:0510c22_31": "若有是者。",
    "X79n1560_009:0510c23_32": "則二文殊。",
    "X79n1560_009:0510c23_33": "然我今日。",
    "X79n1560_009:0510c23_34": "非無文殊。",
    "X79n1560_009:0510c23_35": "於中實無是非二相。",
    "X79n1560_009:0510c24_36": "僧曰。",
    "X79n1560_009:0510c24_37": "既無二相。",
    "X79n1560_009:0510c24_38": "宗一可乎。",
    "X79n1560_009:0510c24_39": "曰是非既乖大旨。",
    "X79n1560_009:0510c24_40": "一二還背圓宗。",
    "X79n1560_009:0511a01_41": "僧曰。",
    "X79n1560_009:0511a01_42": "如何用心。",
    "X79n1560_009:0511a01_43": "方稱此旨。",
    "X79n1560_009:0511a01_44": "曰。",
    "X79n1560_009:0511a01_45": "境智俱亡。",
    "X79n1560_009:0511a02_0": "云何說契。",
    "X79n1560_009:0511a02_1": "僧曰。",
    "X79n1560_009:0511a02_2": "如是則言思道斷。",
    "X79n1560_009:0511a02_3": "心智路絕矣。",
    "X79n1560_009:0511a02_4": "曰此亦強言。",
    "X79n1560_009:0511a03_5": "隨他意轉。",
    "X79n1560_009:0511a03_6": "雖欲隱形。",
    "X79n1560_009:0511a03_7": "而未忘跡。",
    "X79n1560_009:0511a03_8": "僧曰。",
    "X79n1560_009:0511a03_9": "如何得形迹俱忘。",
    "X79n1560_009:0511a04_10": "曰本無朕跡。",
    "X79n1560_009:0511a04_11": "云何說忘。",
    "X79n1560_009:0511a04_12": "僧曰。",
    "X79n1560_009:0511a04_13": "我知之矣。",
    "X79n1560_009:0511a04_14": "要當如人飲水。",
    "X79n1560_009:0511a05_15": "冷暖自知。",
    "X79n1560_009:0511a05_16": "當大悟時節。",
    "X79n1560_009:0511a05_17": "神而明之。",
    "X79n1560_009:0511a05_18": "曰我此門中。",
    "X79n1560_009:0511a06_19": "亦無迷悟。",
    "X79n1560_009:0511a06_20": "明與不明之理。",
    "X79n1560_009:0511a06_21": "撒手似君無一物。",
    "X79n1560_009:0511a07_0": "徒勞辛苦說千般。",
    "X79n1560_009:0511a07_1": "此事非上根大器。",
    "X79n1560_009:0511a07_2": "莫能荷擔。",
    "X79n1560_009:0511a07_3": "先德曰。",
    "X79n1560_009:0511a08_4": "盡十方世界。",
    "X79n1560_009:0511a08_5": "覔一人為伴。",
    "X79n1560_009:0511a08_6": "無有也。",
    "X79n1560_009:0511a08_7": "又曰。",
    "X79n1560_009:0511a08_8": "止是一人承紹祖位。",
    "X79n1560_009:0511a09_9": "終無第二人。",
    "X79n1560_009:0511a09_10": "若未親到。",
    "X79n1560_009:0511a09_11": "謾疲神思。",
    "X79n1560_009:0511a09_12": "借曰玄之又玄。",
    "X79n1560_009:0511a10_13": "妙之又妙。",
    "X79n1560_009:0511a10_14": "但是方便門中。",
    "X79n1560_009:0511a10_15": "旁贊助入之語。",
    "X79n1560_009:0511a10_16": "於自己分上。",
    "X79n1560_009:0511a11_17": "親照之時。",
    "X79n1560_009:0511a11_18": "反視之。",
    "X79n1560_009:0511a11_19": "皆為魔說。",
    "X79n1560_009:0511a11_20": "虗妄浮心。",
    "X79n1560_009:0511a11_21": "多諸巧見。",
    "X79n1560_009:0511a12_22": "不能成就圓覺。",
    "X79n1560_009:0511a12_23": "但以形言迹。",
    "X79n1560_009:0511a12_24": "文彩生時。",
    "X79n1560_009:0511a12_25": "皆是執方便門。",
    "X79n1560_009:0511a13_26": "迷真實道。",
    "X79n1560_009:0511a13_27": "要須如百尺竿頭。",
    "X79n1560_009:0511a13_28": "放身乃可耳。",
    "X79n1560_009:0511a14_0": "僧曰。",
    "X79n1560_009:0511a14_1": "願乞最後一言。",
    "X79n1560_009:0511a14_2": "曰化人問幻士。",
    "X79n1560_009:0511a14_3": "谷響答泉聲。",
    "X79n1560_009:0511a14_4": "欲達吾宗旨。",
    "X79n1560_009:0511a15_5": "泥牛水上行。",
    "X79n1560_009:0511a15_6": "又甞謂門弟子曰。",
    "X79n1560_009:0511a15_7": "夫佛祖正宗。",
    "X79n1560_009:0511a16_8": "則真唯識。",
    "X79n1560_009:0511a16_9": "纔有信處。",
    "X79n1560_009:0511a16_10": "皆可為人。",
    "X79n1560_009:0511a16_11": "若論修證之門。",
    "X79n1560_009:0511a16_12": "則諸方皆云。",
    "X79n1560_009:0511a17_13": "功未齊於諸聖。",
    "X79n1560_009:0511a17_14": "且教中所。",
    "X79n1560_009:0511a17_15": "許初心菩薩。",
    "X79n1560_009:0511a17_16": "皆可比知。",
    "X79n1560_009:0511a18_17": "亦許約教而會。",
    "X79n1560_009:0511a18_18": "先以聞解信入。",
    "X79n1560_009:0511a18_19": "後以無思契同。",
    "X79n1560_009:0511a19_20": "若入信門。",
    "X79n1560_009:0511a19_21": "便登祖位。",
    "X79n1560_009:0511a19_22": "且約現今世間之事。",
    "X79n1560_009:0511a19_23": "眾世界中。",
    "X79n1560_009:0511a20_24": "第一比知。",
    "X79n1560_009:0511a20_25": "第二現知。",
    "X79n1560_009:0511a20_26": "第三約教而知。",
    "X79n1560_009:0511a20_27": "第一比知者。",
    "X79n1560_009:0511a21_0": "且如即今有漏之身。",
    "X79n1560_009:0511a21_1": "夜皆有夢。",
    "X79n1560_009:0511a21_2": "夢中所見。",
    "X79n1560_009:0511a21_3": "好惡境界。",
    "X79n1560_009:0511a22_0": "憂喜宛然。",
    "X79n1560_009:0511a22_1": "覺來牀上安眠。",
    "X79n1560_009:0511a22_2": "何曾是實。",
    "X79n1560_009:0511a22_3": "並是夢中意識。",
    "X79n1560_009:0511a23_0": "思想所為。",
    "X79n1560_009:0511a23_1": "則可比知。",
    "X79n1560_009:0511a23_2": "覺時之事。",
    "X79n1560_009:0511a23_3": "皆如夢中無實。",
    "X79n1560_009:0511a23_4": "夫過去未來現在。",
    "X79n1560_009:0511a24_5": "三世境界。",
    "X79n1560_009:0511a24_6": "元是第八阿賴耶識親相分。",
    "X79n1560_009:0511b01_0": "唯是本識所變。",
    "X79n1560_009:0511b01_1": "若現在之境。",
    "X79n1560_009:0511b01_2": "是明了意識分別。",
    "X79n1560_009:0511b01_3": "若過去未來之境是獨散意識。",
    "X79n1560_009:0511b02_4": "思惟夢覺之境雖殊。",
    "X79n1560_009:0511b02_5": "俱不出於意識。",
    "X79n1560_009:0511b03_6": "則唯心之旨。",
    "X79n1560_009:0511b03_7": "比況昭然。",
    "X79n1560_009:0511b03_8": "第二現知者。",
    "X79n1560_009:0511b03_9": "即是對事分明。",
    "X79n1560_009:0511b04_10": "不待立況。",
    "X79n1560_009:0511b04_11": "且如現見青白等物時。",
    "X79n1560_009:0511b04_12": "物本自虗。",
    "X79n1560_009:0511b05_13": "不言我青我白。",
    "X79n1560_009:0511b05_14": "皆是眼識分。",
    "X79n1560_009:0511b05_15": "與同時意識。",
    "X79n1560_009:0511b05_16": "計度分別。",
    "X79n1560_009:0511b06_17": "為青為白。",
    "X79n1560_009:0511b06_18": "以意辨為色。",
    "X79n1560_009:0511b06_19": "以言說為青。",
    "X79n1560_009:0511b06_20": "皆是意言。",
    "X79n1560_009:0511b06_21": "自妄安置。",
    "X79n1560_009:0511b07_22": "以六塵鈍故。",
    "X79n1560_009:0511b07_23": "體不自立。",
    "X79n1560_009:0511b07_24": "名不自呼。",
    "X79n1560_009:0511b07_25": "一色既然。",
    "X79n1560_009:0511b08_0": "萬法咸爾。",
    "X79n1560_009:0511b08_1": "皆無自性。",
    "X79n1560_009:0511b08_2": "悉是意言。",
    "X79n1560_009:0511b08_3": "故曰。",
    "X79n1560_009:0511b08_4": "萬法本閑而人自閙。",
    "X79n1560_009:0511b09_5": "是以若有心起時。",
    "X79n1560_009:0511b09_6": "萬境皆有。",
    "X79n1560_009:0511b09_7": "若空心起處。",
    "X79n1560_009:0511b09_8": "萬境皆空。",
    "X79n1560_009:0511b10_9": "則空不自空。",
    "X79n1560_009:0511b10_10": "因心故空。",
    "X79n1560_009:0511b10_11": "有自不有。",
    "X79n1560_009:0511b10_12": "因心故有。",
    "X79n1560_009:0511b10_13": "既非空非有。",
    "X79n1560_009:0511b11_14": "則唯識唯心。",
    "X79n1560_009:0511b11_15": "若無於心。",
    "X79n1560_009:0511b11_16": "萬法安寄。",
    "X79n1560_009:0511b11_17": "又如過去之境。",
    "X79n1560_009:0511b12_18": "何曾是有。",
    "X79n1560_009:0511b12_19": "隨念起處。",
    "X79n1560_009:0511b12_20": "忽然現前。",
    "X79n1560_009:0511b12_21": "若想不生。",
    "X79n1560_009:0511b12_22": "境亦不現。",
    "X79n1560_009:0511b13_23": "此皆是眾生日用。",
    "X79n1560_009:0511b13_24": "可以現知。",
    "X79n1560_009:0511b13_25": "不待功成。",
    "X79n1560_009:0511b13_26": "豈假修得。",
    "X79n1560_009:0511b14_27": "凡有心者。",
    "X79n1560_009:0511b14_28": "並可證知。",
    "X79n1560_009:0511b14_29": "故先德曰。",
    "X79n1560_009:0511b14_30": "如大根人。",
    "X79n1560_009:0511b14_31": "知唯識者。",
    "X79n1560_009:0511b15_32": "恒觀自心。",
    "X79n1560_009:0511b15_33": "意言為境。",
    "X79n1560_009:0511b15_34": "此初觀時。",
    "X79n1560_009:0511b15_35": "雖未成聖。",
    "X79n1560_009:0511b15_36": "分知意言。",
    "X79n1560_009:0511b16_37": "則是菩薩。",
    "X79n1560_009:0511b16_38": "第三約教而知者。",
    "X79n1560_009:0511b16_39": "大經云。",
    "X79n1560_009:0511b16_40": "三界唯心。",
    "X79n1560_009:0511b17_0": "萬法唯識。",
    "X79n1560_009:0511b17_1": "此是所現本理。",
    "X79n1560_009:0511b17_2": "能詮正宗也。",
    "X79n1560_009:0511b17_3": "智覺乘大願力。",
    "X79n1560_009:0511b18_4": "為震旦法施主。",
    "X79n1560_009:0511b18_5": "聲被異國。",
    "X79n1560_009:0511b18_6": "高麗遣僧。",
    "X79n1560_009:0511b18_7": "航海問道。",
    "X79n1560_009:0511b18_8": "其國王投書。",
    "X79n1560_009:0511b19_9": "敘門弟子之禮。",
    "X79n1560_009:0511b19_10": "奉金絲織成伽棃。",
    "X79n1560_009:0511b19_11": "水精數珠。",
    "X79n1560_009:0511b20_12": "金澡缾。",
    "X79n1560_009:0511b20_13": "等并僧三十六人。",
    "X79n1560_009:0511b20_14": "親承印記。",
    "X79n1560_009:0511b20_15": "相繼歸本國。",
    "X79n1560_009:0511b21_0": "各化一方。",
    "X79n1560_009:0511b21_1": "以開寶八年乙亥十二月示疾。",
    "X79n1560_009:0511b21_2": "二十六日辰時。",
    "X79n1560_009:0511b22_3": "焚香告眾。",
    "X79n1560_009:0511b22_4": "跏趺而化。",
    "X79n1560_009:0511b22_5": "明年正月六日。",
    "X79n1560_009:0511b22_6": "塔于大慈山。",
    "X79n1560_009:0511b23_7": "閱世七十有二。",
    "X79n1560_009:0511b23_8": "坐四十有二夏。",
    "X79n1560_009:0511b24_0": "贊曰。",
    "X79n1560_009:0511b24_1": "予初讀自行錄。",
    "X79n1560_009:0511b24_2": "錄其行事。",
    "X79n1560_009:0511b24_3": "日百八件。",
    "X79n1560_009:0511b24_4": "計其貌狀。",
    "X79n1560_009:0511c01_0": "必枯悴尫劣。",
    "X79n1560_009:0511c01_1": "及見其畫像。",
    "X79n1560_009:0511c01_2": "凜然豐碩。",
    "X79n1560_009:0511c01_3": "眉目秀拔。",
    "X79n1560_009:0511c01_4": "氣和如春。",
    "X79n1560_009:0511c02_5": "味其平生。",
    "X79n1560_009:0511c02_6": "如千江之月。",
    "X79n1560_009:0511c02_7": "研其說法。",
    "X79n1560_009:0511c02_8": "如禹之治水。",
    "X79n1560_009:0511c03_0": "孔子之聞韶。",
    "X79n1560_009:0511c03_1": "羿之射。",
    "X79n1560_009:0511c03_2": "王良之御。",
    "X79n1560_009:0511c03_3": "孫子之用兵。",
    "X79n1560_009:0511c03_4": "左丘明太史公之文章。",
    "X79n1560_009:0511c04_5": "嗚呼。",
    "X79n1560_009:0511c04_6": "真乘悲願而至者也。",
    "X79n1560_009:0511c05_0": "雲居簡禪師",
    "X79n1560_009:0511c06_0": "禪師名道簡。",
    "X79n1560_009:0511c06_1": "其先范陽人。",
    "X79n1560_009:0511c06_2": "史失其氏。",
    "X79n1560_009:0511c06_3": "天姿粹美。",
    "X79n1560_009:0511c06_4": "閑靜寡言。",
    "X79n1560_009:0511c07_5": "童子剃落。",
    "X79n1560_009:0511c07_6": "受滿分戒。",
    "X79n1560_009:0511c07_7": "徧游叢席。",
    "X79n1560_009:0511c07_8": "造雲居。",
    "X79n1560_009:0511c07_9": "謁膺禪師。",
    "X79n1560_009:0511c08_10": "膺與語連三日。",
    "X79n1560_009:0511c08_11": "大奇之。",
    "X79n1560_009:0511c08_12": "而誡令。",
    "X79n1560_009:0511c08_13": "刻苦事眾。",
    "X79n1560_009:0511c08_14": "於是簡躬探井臼。",
    "X79n1560_009:0511c09_15": "司樵爨。",
    "X79n1560_009:0511c09_16": "徧掌寺務。",
    "X79n1560_009:0511c09_17": "不妨商略古今。",
    "X79n1560_009:0511c09_18": "眾莫有知者。",
    "X79n1560_009:0511c10_19": "以臘高為堂中第一座。",
    "X79n1560_009:0511c10_20": "先是高安洞山。",
    "X79n1560_009:0511c10_21": "有神靈甚。",
    "X79n1560_009:0511c11_22": "膺公住三峰時受服役。",
    "X79n1560_009:0511c11_23": "既來雲居。",
    "X79n1560_009:0511c11_24": "神亦從至。",
    "X79n1560_009:0511c11_25": "舍於枯樹之下。",
    "X79n1560_009:0511c12_26": "而樹茂。",
    "X79n1560_009:0511c12_27": "號安樂樹神。",
    "X79n1560_009:0511c12_28": "屬膺將順寂。",
    "X79n1560_009:0511c12_29": "主事僧白曰。",
    "X79n1560_009:0511c13_30": "和尚即不諱。",
    "X79n1560_009:0511c13_31": "誰可繼者。",
    "X79n1560_009:0511c13_32": "曰堂中簡。",
    "X79n1560_009:0511c13_33": "主事僧意不在簡。",
    "X79n1560_009:0511c14_34": "謂令揀選。",
    "X79n1560_009:0511c14_35": "可當說法者。",
    "X79n1560_009:0511c14_36": "僉曰第二座可。",
    "X79n1560_009:0511c14_37": "然且攝禮。",
    "X79n1560_009:0511c15_38": "先請簡。",
    "X79n1560_009:0511c15_39": "簡豈敢當也。",
    "X79n1560_009:0511c15_40": "既申請。",
    "X79n1560_009:0511c15_41": "簡無所辭讓。",
    "X79n1560_009:0511c15_42": "即自持道具。",
    "X79n1560_009:0511c16_43": "入方丈。",
    "X79n1560_009:0511c16_44": "攝眾演法自如。",
    "X79n1560_009:0511c16_45": "主事僧大沮。",
    "X79n1560_009:0511c16_46": "簡知之。",
    "X79n1560_009:0511c16_47": "一夕遁去。",
    "X79n1560_009:0511c17_48": "安樂樹神者號泣。",
    "X79n1560_009:0511c17_49": "詰旦眾追至麥莊。",
    "X79n1560_009:0511c17_50": "悔過迎歸。",
    "X79n1560_009:0511c18_51": "聞空中連呼。",
    "X79n1560_009:0511c18_52": "曰和尚來也。",
    "X79n1560_009:0511c18_53": "僧問。",
    "X79n1560_009:0511c18_54": "如何是和尚家風。",
    "X79n1560_009:0511c19_0": "曰隨處得自在。",
    "X79n1560_009:0511c19_1": "問維摩豈不是金粟如來。",
    "X79n1560_009:0511c19_2": "曰是。",
    "X79n1560_009:0511c19_3": "曰為什麼却在釋迦會下聽法。",
    "X79n1560_009:0511c20_4": "曰他不爭人我。",
    "X79n1560_009:0511c20_5": "問如何是朱頂王菩薩。",
    "X79n1560_009:0511c21_6": "曰問這赤頭漢作麼。",
    "X79n1560_009:0511c21_7": "問橫身蓋覆時如何。",
    "X79n1560_009:0511c22_8": "曰還蓋得麼。",
    "X79n1560_009:0511c22_9": "問虵子為什麼吞却虵。",
    "X79n1560_009:0511c22_10": "師曰。",
    "X79n1560_009:0511c22_11": "在理何傷。",
    "X79n1560_009:0511c23_12": "問諸佛道不得處。",
    "X79n1560_009:0511c23_13": "和尚還道得麼。",
    "X79n1560_009:0511c23_14": "曰汝道。",
    "X79n1560_009:0511c23_15": "什麼處諸聖道不得。",
    "X79n1560_009:0511c24_16": "問路逢猛虎時如何。",
    "X79n1560_009:0511c24_17": "曰千人萬人不逢。",
    "X79n1560_009:0512a01_0": "偏汝便逢。",
    "X79n1560_009:0512a01_1": "問獨宿孤峰時如何。",
    "X79n1560_009:0512a01_2": "曰閑著七間僧堂不宿。",
    "X79n1560_009:0512a02_3": "阿誰教汝孤峰獨宿。",
    "X79n1560_009:0512a02_4": "問古人云。",
    "X79n1560_009:0512a02_5": "若欲保任此事。",
    "X79n1560_009:0512a02_6": "直須向高高山頂立。",
    "X79n1560_009:0512a03_7": "深深海裏行。",
    "X79n1560_009:0512a03_8": "意旨如何。",
    "X79n1560_009:0512a03_9": "曰高峰深海逈絕孤危。",
    "X79n1560_009:0512a04_10": "似汝閨閤中軟暖麼。",
    "X79n1560_009:0512a04_11": "又問。",
    "X79n1560_009:0512a04_12": "叢林多好論。",
    "X79n1560_009:0512a05_0": "尊貴邊事如何。",
    "X79n1560_009:0512a05_1": "曰要汝知大唐天子不書斷。",
    "X79n1560_009:0512a05_2": "會麼。",
    "X79n1560_009:0512a05_3": "簡契悟精深。",
    "X79n1560_009:0512a06_4": "履踐明驗。",
    "X79n1560_009:0512a06_5": "而對機應物。",
    "X79n1560_009:0512a06_6": "度越格量。",
    "X79n1560_009:0512a06_7": "天下宗之。",
    "X79n1560_009:0512a07_8": "師壽八十餘。",
    "X79n1560_009:0512a07_9": "無疾而化。",
    "X79n1560_009:0512a07_10": "廬州帥張崇為建塔于本山。",
    "X79n1560_009:0512a09_0": "贊曰。",
    "X79n1560_009:0512a09_1": "大陽明安。",
    "X79n1560_009:0512a09_2": "甞疏藥山之語曰。",
    "X79n1560_009:0512a09_3": "高高山上標不出。",
    "X79n1560_009:0512a10_0": "深深海底藏不沒。",
    "X79n1560_009:0512a10_1": "其兒孫遵承之。",
    "X79n1560_009:0512a10_2": "以為妙得其旨。",
    "X79n1560_009:0512a10_3": "及聞雲居之言。",
    "X79n1560_009:0512a11_4": "則如真虎踞地而吼。",
    "X79n1560_009:0512a11_5": "百獸震恐。",
    "X79n1560_009:0512a11_6": "乃悟明安所示。",
    "X79n1560_009:0512a12_7": "蓋裴旻之虎也。",
    "X79n1560_009:0512a12_8": "予為作偈曰。",
    "X79n1560_009:0512a12_9": "高高山上立。",
    "X79n1560_009:0512a12_10": "深深海底行。",
    "X79n1560_009:0512a13_11": "道人行立處。",
    "X79n1560_009:0512a13_12": "塵世有誰爭。",
    "X79n1560_009:0512a13_13": "無間功不立。",
    "X79n1560_009:0512a13_14": "渠儂尊貴生。",
    "X79n1560_009:0512a14_15": "詶君顛倒欲。",
    "X79n1560_009:0512a14_16": "枯木一枝榮。",
    "X79n1560_009:0512a16_0": "禪林僧寶傳卷第九"
}