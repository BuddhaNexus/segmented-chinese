[
    {
        "source_sentence": "大方廣華嚴十惡品經",
        "from": "T85n2875_001:1359b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子□如國王統領國事多饒□□□□",
        "from": "T85n2875_001:1359b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼車渠馬瑙珊瑚虎珀珍寶瓔珞□□□",
        "from": "T85n2875_001:1359b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘死入地獄。",
        "from": "T85n2875_001:1359b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如凡夫在於世界多饒□□□馬牛羊絹帛布疋大小穀豆皆以具□□□大乘死入地獄。",
        "from": "T85n2875_001:1359b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故□□□□□□□□苦。",
        "from": "T85n2875_001:1359b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加葉菩薩白佛言。",
        "from": "T85n2875_001:1359b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊實如聖□□□聖教。",
        "from": "T85n2875_001:1359b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加葉菩薩復白佛言。",
        "from": "T85n2875_001:1359b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊何者為善。",
        "from": "T85n2875_001:1359b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1359b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生若修善根。",
        "from": "T85n2875_001:1359b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者不害眾生。",
        "from": "T85n2875_001:1359b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者不行放逸。",
        "from": "T85n2875_001:1359b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者不飲酒。",
        "from": "T85n2875_001:1359b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者不食肉。",
        "from": "T85n2875_001:1359b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者常行大慈。",
        "from": "T85n2875_001:1359b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人不斷善根。",
        "from": "T85n2875_001:1359b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言。",
        "from": "T85n2875_001:1359b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如佛所說受佛教者。",
        "from": "T85n2875_001:1359b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不聽飲酒。",
        "from": "T85n2875_001:1359b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1359b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉。",
        "from": "T85n2875_001:1359b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝解我意。",
        "from": "T85n2875_001:1359b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生不飲酒者。",
        "from": "T85n2875_001:1359c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是我真子。",
        "from": "T85n2875_001:1359c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則非凡夫。",
        "from": "T85n2875_001:1359c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1359c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲酒者。",
        "from": "T85n2875_001:1359c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或君不識臣。",
        "from": "T85n2875_001:1359c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或臣不識君。",
        "from": "T85n2875_001:1359c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或父不識子。",
        "from": "T85n2875_001:1359c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或子不識父。",
        "from": "T85n2875_001:1359c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或兄不識弟。",
        "from": "T85n2875_001:1359c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或弟不識兄。",
        "from": "T85n2875_001:1359c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或姊不識妹。",
        "from": "T85n2875_001:1359c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或妹不識姊。",
        "from": "T85n2875_001:1359c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或夫不識妻。",
        "from": "T85n2875_001:1359c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或妻不識夫。",
        "from": "T85n2875_001:1359c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或師不識弟子。",
        "from": "T85n2875_001:1359c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或弟子不識師。",
        "from": "T85n2875_001:1359c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或不識內外眷屬。",
        "from": "T85n2875_001:1359c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1359c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現前顛倒。",
        "from": "T85n2875_001:1359c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況未來。",
        "from": "T85n2875_001:1359c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1359c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生不食酒肉者。",
        "from": "T85n2875_001:1359c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得發阿耨多羅三藐三菩提心。",
        "from": "T85n2875_001:1359c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告諸大眾言。",
        "from": "T85n2875_001:1359c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1359c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝好諦聽諦聽。",
        "from": "T85n2875_001:1359c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍婆提國有吉槃陀女為人沽酒。",
        "from": "T85n2875_001:1359c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釵梳落在井中。",
        "from": "T85n2875_001:1359c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬羅漢圍遶井住。",
        "from": "T85n2875_001:1359c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汲水飲之。",
        "from": "T85n2875_001:1359c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便昏醉不識如來。",
        "from": "T85n2875_001:1359c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來為諸羅漢演說法要。",
        "from": "T85n2875_001:1359c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸羅漢既聞法已。",
        "from": "T85n2875_001:1359c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酒便得醒。",
        "from": "T85n2875_001:1359c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來至佛所白佛言。",
        "from": "T85n2875_001:1359c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今修道得四道果。",
        "from": "T85n2875_001:1359c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故今日不識。",
        "from": "T85n2875_001:1359c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來佛告諸善男子。",
        "from": "T85n2875_001:1359c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍婆提國有吉槃陀女。",
        "from": "T85n2875_001:1359c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人沽酒。",
        "from": "T85n2875_001:1359c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釵梳落在井中。",
        "from": "T85n2875_001:1359c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今飲水以便昏醉。",
        "from": "T85n2875_001:1359c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為汝除却顛倒。",
        "from": "T85n2875_001:1359c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今見汝生恐懼心。",
        "from": "T85n2875_001:1359c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉槃陀女為人受苦墮鋸床地獄。",
        "from": "T85n2875_001:1359c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鋸此女身作其百段。",
        "from": "T85n2875_001:1359c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吹令微塵。",
        "from": "T85n2875_001:1359c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還復聚合受形訖竟。",
        "from": "T85n2875_001:1359c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身長三尺顏色青黑。",
        "from": "T85n2875_001:1359c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭上無毛兩耳閉塞。",
        "from": "T85n2875_001:1359c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復無兩目亦無鼻孔。",
        "from": "T85n2875_001:1359c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下唇蹇哆手無十指脚無兩足。",
        "from": "T85n2875_001:1359c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由沽酒。",
        "from": "T85n2875_001:1359c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈況飲之。",
        "from": "T85n2875_001:1359c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖先飲酒又乃發露。",
        "from": "T85n2875_001:1359c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生重悔如懷慚愧。",
        "from": "T85n2875_001:1359c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又莫更飲。",
        "from": "T85n2875_001:1359c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人身遇重病。",
        "from": "T85n2875_001:1359c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃值良師齎藥塗之。",
        "from": "T85n2875_001:1359c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因藥得差。",
        "from": "T85n2875_001:1359c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔之人亦復如是。",
        "from": "T85n2875_001:1359c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生重悔。",
        "from": "T85n2875_001:1359c24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又莫更作。",
        "from": "T85n2875_001:1359c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得阿耨多羅三藐三菩提心。",
        "from": "T85n2875_001:1359c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告諸大眾比丘比丘尼優婆塞優婆夷。",
        "from": "T85n2875_001:1359c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受五戒者。",
        "from": "T85n2875_001:1359c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受二百五十戒者。",
        "from": "T85n2875_001:1359c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受威儀具足戒者。",
        "from": "T85n2875_001:1359c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受戒者。",
        "from": "T85n2875_001:1359c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不聽飲酒。",
        "from": "T85n2875_001:1359c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲酒者犯波羅提木叉罪。",
        "from": "T85n2875_001:1359c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘比丘尼若犯此者即入地獄。",
        "from": "T85n2875_001:1360a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若凡夫人犯突吉羅罪。",
        "from": "T85n2875_001:1360a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬劫中入於地獄。",
        "from": "T85n2875_001:1360a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言。",
        "from": "T85n2875_001:1360a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊酒亦無命。",
        "from": "T85n2875_001:1360a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來何故誡酒為苦。",
        "from": "T85n2875_001:1360a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍婆提國有鴦崛魔羅。",
        "from": "T85n2875_001:1360a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲酒醉亂婬匿其母殺戮其父。",
        "from": "T85n2875_001:1360a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其母復與外人共通持刀害之。",
        "from": "T85n2875_001:1360a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故今日誡酒為苦。",
        "from": "T85n2875_001:1360a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告迦葉菩薩言。",
        "from": "T85n2875_001:1360a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子我誡諸白衣及出家等。",
        "from": "T85n2875_001:1360a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受我戒者不聽酌酒與人。",
        "from": "T85n2875_001:1360a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不聽到酒家。",
        "from": "T85n2875_001:1360a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不聽強勸人酒。",
        "from": "T85n2875_001:1360a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不聽共人麴釀。",
        "from": "T85n2875_001:1360a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞弟子亦復如是。",
        "from": "T85n2875_001:1360a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩制心。",
        "from": "T85n2875_001:1360a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞制形。",
        "from": "T85n2875_001:1360a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1360a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不聽酌酒與比丘。",
        "from": "T85n2875_001:1360a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若與者五百世無臂。",
        "from": "T85n2875_001:1360a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共比丘麴釀。",
        "from": "T85n2875_001:1360a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百世耳聾耳聽隔絕。",
        "from": "T85n2875_001:1360a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常不聞勿聲語。",
        "from": "T85n2875_001:1360a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘酒家者。",
        "from": "T85n2875_001:1360a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百世為啞。",
        "from": "T85n2875_001:1360a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口不能語。",
        "from": "T85n2875_001:1360a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強勸比丘酒者。",
        "from": "T85n2875_001:1360a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮截膝地獄。",
        "from": "T85n2875_001:1360a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱廣八萬由旬。",
        "from": "T85n2875_001:1360a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱廣正等。",
        "from": "T85n2875_001:1360a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中力士其數五百。",
        "from": "T85n2875_001:1360a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造其刀劍截其兩膝。",
        "from": "T85n2875_001:1360a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強勸比丘酒者亦復如是。",
        "from": "T85n2875_001:1360a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言。",
        "from": "T85n2875_001:1360a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊食肉者得何等罪。",
        "from": "T85n2875_001:1360a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉。",
        "from": "T85n2875_001:1360a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生不食肉者。",
        "from": "T85n2875_001:1360a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是吾遺腹之子。",
        "from": "T85n2875_001:1360a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則非凡夫。",
        "from": "T85n2875_001:1360a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1360a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生若受大乘大般涅槃。",
        "from": "T85n2875_001:1360a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1360a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生若住一劫不聽食肉。",
        "from": "T85n2875_001:1360a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T85n2875_001:1360a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉者墮何處地獄。",
        "from": "T85n2875_001:1360a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉者墮阿鼻地獄。",
        "from": "T85n2875_001:1360a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱廣正等八萬由旬。",
        "from": "T85n2875_001:1360a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方有門。",
        "from": "T85n2875_001:1360a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一門外各有猛火。",
        "from": "T85n2875_001:1360a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東西南北交通徹地。",
        "from": "T85n2875_001:1360a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周匝鐵墻鐵網彌覆。",
        "from": "T85n2875_001:1360a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其地赤鐵。",
        "from": "T85n2875_001:1360a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上火徹下。",
        "from": "T85n2875_001:1360a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下火徹上。",
        "from": "T85n2875_001:1360a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵鉫鐵鈕鐵銜鐵䤤。",
        "from": "T85n2875_001:1360a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持火燒之。",
        "from": "T85n2875_001:1360a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驅食肉之人入此地獄受其大苦。",
        "from": "T85n2875_001:1360a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生重悔而懷慚愧。",
        "from": "T85n2875_001:1360a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又莫更食。",
        "from": "T85n2875_001:1360a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如濁水置之明珠。",
        "from": "T85n2875_001:1360a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以珠威力水即為清。",
        "from": "T85n2875_001:1360a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如煙雲除月則清明。",
        "from": "T85n2875_001:1360a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作惡能悔亦復如是。",
        "from": "T85n2875_001:1360a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生食肉者斷大慈種。",
        "from": "T85n2875_001:1360a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不食肉者有大功德。",
        "from": "T85n2875_001:1360a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬分不如其一。",
        "from": "T85n2875_001:1360a29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言。",
        "from": "T85n2875_001:1360b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊煮肉炙肉斬肉殺生之人分別幾處。",
        "from": "T85n2875_001:1360b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煮肉者墮鑊湯地獄。",
        "from": "T85n2875_001:1360b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱廣五百由旬。",
        "from": "T85n2875_001:1360b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中有水其下有火。",
        "from": "T85n2875_001:1360b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持火燒之潰潰乃沸。",
        "from": "T85n2875_001:1360b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驅煮肉之人入此地獄受其大苦。",
        "from": "T85n2875_001:1360b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "炙肉之人墮炙床地獄。",
        "from": "T85n2875_001:1360b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱廣八萬由旬。",
        "from": "T85n2875_001:1360b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其上鐵床其下有火。",
        "from": "T85n2875_001:1360b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持火燒之。",
        "from": "T85n2875_001:1360b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驅炙肉之人臥之在上。",
        "from": "T85n2875_001:1360b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肉乾燋爛受其大苦。",
        "from": "T85n2875_001:1360b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斬肉之人墮剉碓地獄。",
        "from": "T85n2875_001:1360b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中力士其數五百。",
        "from": "T85n2875_001:1360b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斬令萬段吹令微塵還復受其大苦。",
        "from": "T85n2875_001:1360b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言。",
        "from": "T85n2875_001:1360b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊食肉者非如來弟子。",
        "from": "T85n2875_001:1360b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是外道眷屬也。",
        "from": "T85n2875_001:1360b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉者不覺不知不聞不見當食肉。",
        "from": "T85n2875_001:1360b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或君食臣肉。",
        "from": "T85n2875_001:1360b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或臣食君肉。",
        "from": "T85n2875_001:1360b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或子食父肉。",
        "from": "T85n2875_001:1360b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或父食子肉。",
        "from": "T85n2875_001:1360b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或弟食兄肉。",
        "from": "T85n2875_001:1360b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或兄食弟肉。",
        "from": "T85n2875_001:1360b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或妹食姉肉。",
        "from": "T85n2875_001:1360b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或姉食妹肉。",
        "from": "T85n2875_001:1360b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或妻食夫肉。",
        "from": "T85n2875_001:1360b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或夫食妻肉。",
        "from": "T85n2875_001:1360b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉之人即食父母眷屬肉。",
        "from": "T85n2875_001:1360b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言。",
        "from": "T85n2875_001:1360b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊食肉者墮何處地獄。",
        "from": "T85n2875_001:1360b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉者墮糞穢地獄。",
        "from": "T85n2875_001:1360b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱廣正等八萬由旬。",
        "from": "T85n2875_001:1360b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中有糞乃深萬丈。",
        "from": "T85n2875_001:1360b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驅食肉之人入此地獄受其大苦。",
        "from": "T85n2875_001:1360b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百萬世無有出期。",
        "from": "T85n2875_001:1360b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1360b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉者猶如群狗爭骨各各貪多。",
        "from": "T85n2875_001:1360b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉之人亦復如是。",
        "from": "T85n2875_001:1360b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1360b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斬肉者即斬其父。",
        "from": "T85n2875_001:1360b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "割肉者即割父肉。",
        "from": "T85n2875_001:1360b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "割害其母。",
        "from": "T85n2875_001:1360b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如父死必作牛羊持刀害之。",
        "from": "T85n2875_001:1360b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是其父。",
        "from": "T85n2875_001:1360b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生心則顛倒。",
        "from": "T85n2875_001:1360b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉者即食父肉。",
        "from": "T85n2875_001:1360b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚙骨者即嚙父骨。",
        "from": "T85n2875_001:1360b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若飲肉汁者即飲父血。",
        "from": "T85n2875_001:1360b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1360b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生若有慚愧不應食肉。",
        "from": "T85n2875_001:1360b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖先食肉又能發露心生重悔。",
        "from": "T85n2875_001:1360b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦發阿耨多羅三藐三菩提心。",
        "from": "T85n2875_001:1360b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言。",
        "from": "T85n2875_001:1360b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊唯願如來為我解說。",
        "from": "T85n2875_001:1360b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破齋者墮何處地獄。",
        "from": "T85n2875_001:1360b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破齋者墮餓鬼地獄。",
        "from": "T85n2875_001:1360b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中餓鬼身長五百由旬。",
        "from": "T85n2875_001:1360c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其咽如針。",
        "from": "T85n2875_001:1360c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭如太山。",
        "from": "T85n2875_001:1360c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手如龍爪。",
        "from": "T85n2875_001:1360c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝食三千暮食八百。",
        "from": "T85n2875_001:1360c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一呼三萬驅。",
        "from": "T85n2875_001:1360c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破齋之人入此地獄受其大苦。",
        "from": "T85n2875_001:1360c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復離此地獄遶其太山山猶如緋色驅。",
        "from": "T85n2875_001:1360c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破齋之人將背倚之。",
        "from": "T85n2875_001:1360c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肉乾燋爛受其大苦。",
        "from": "T85n2875_001:1360c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復離此苦轉形更受。",
        "from": "T85n2875_001:1360c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1360c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若食齋訖者。",
        "from": "T85n2875_001:1360c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或裹齋食者與父母兄弟君臣師長朋友知識。",
        "from": "T85n2875_001:1360c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來世中墮鐵輪地獄。",
        "from": "T85n2875_001:1360c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左腋入右脇出融銅灌口。",
        "from": "T85n2875_001:1360c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受齋食者亦復如是。",
        "from": "T85n2875_001:1360c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2875_001:1360c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食鷄肉者當墮地獄。",
        "from": "T85n2875_001:1360c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三人共償倍半相迎同入地獄。",
        "from": "T85n2875_001:1360c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言。",
        "from": "T85n2875_001:1360c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊實如聖教實如聖教。",
        "from": "T85n2875_001:1360c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言。",
        "from": "T85n2875_001:1360c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊唯願如來為我解說。",
        "from": "T85n2875_001:1360c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不飲酒不食肉者得幾所福。",
        "from": "T85n2875_001:1360c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2875_001:1360c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人象馬牛羊瑠璃珍寶瓔珞國城妻子持用布施。",
        "from": "T85n2875_001:1360c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶亦不如有人能斷酒肉。",
        "from": "T85n2875_001:1360c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬分不如其一。",
        "from": "T85n2875_001:1360c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復置是事。",
        "from": "T85n2875_001:1360c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人百千兩金遍滿三千大千世界持用布施。",
        "from": "T85n2875_001:1360c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶亦不如有人能斷酒肉百千萬分不如其一。",
        "from": "T85n2875_001:1360c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復置是事。",
        "from": "T85n2875_001:1360c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有能鑄金為人數百持用布施。",
        "from": "T85n2875_001:1360c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶亦不如有人能斷酒肉。",
        "from": "T85n2875_001:1360c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬分不如其一。",
        "from": "T85n2875_001:1360c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復置是事。",
        "from": "T85n2875_001:1360c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人造作幡華寶蓋遍滿三千大千世界。",
        "from": "T85n2875_001:1360c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶亦不如有人能斷酒肉。",
        "from": "T85n2875_001:1360c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬分不如其一。",
        "from": "T85n2875_001:1360c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復置是事。",
        "from": "T85n2875_001:1360c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人造大浮圖寶塔簷簷相次如稻麻竹𥯤上至梵天。",
        "from": "T85n2875_001:1360c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如有人能斷酒肉。",
        "from": "T85n2875_001:1360c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬分不如其一。",
        "from": "T85n2875_001:1360c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1360c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不食肉者現世菩薩則非凡夫。",
        "from": "T85n2875_001:1360c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2875_001:1360c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不食肉者常無肉想。",
        "from": "T85n2875_001:1360c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食肉之人□□□□□□見而生害即生肉想。",
        "from": "T85n2875_001:1360c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是義□□□□□□迦葉菩薩白佛言。",
        "from": "T85n2875_001:1360c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊實如聖□□□□□□佛告迦葉。",
        "from": "T85n2875_001:1360c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生譬如有□□□□□□窮孤老後生一極子甚憐□□□□□□把飯二團俱授如過與子嬰□□□□□□金而取其飯。",
        "from": "T85n2875_001:1361a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生亦復□□□□□□生猶如慈父眾生不授我□□□□□□。",
        "from": "T85n2875_001:1361a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣華嚴十惡品經",
        "from": "T85n2875_001:1361a05_100",
        "context_with_next_sentence": false
    }
]