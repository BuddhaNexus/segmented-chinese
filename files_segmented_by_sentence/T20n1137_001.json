[
    {
        "source_sentence": "佛說善法方便陀羅尼經",
        "from": "T20n1137_001:0580a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人名今附東晉錄",
        "from": "T20n1137_001:0580a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛住摩竭提界寂滅道場菩",
        "from": "T20n1137_001:0580a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提樹下。",
        "from": "T20n1137_001:0580a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與比丘僧大眾俱集。",
        "from": "T20n1137_001:0580a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰大智舍利弗。",
        "from": "T20n1137_001:0580a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老目揵連。",
        "from": "T20n1137_001:0580a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老阿難。",
        "from": "T20n1137_001:0580a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大聲聞等。",
        "from": "T20n1137_001:0580a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸菩薩摩訶薩眾。",
        "from": "T20n1137_001:0580a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛幢菩薩。",
        "from": "T20n1137_001:0580a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藏菩薩。",
        "from": "T20n1137_001:0580a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩。",
        "from": "T20n1137_001:0580a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是賢劫諸大菩薩摩訶薩眾。",
        "from": "T20n1137_001:0580a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時執金剛神白佛言。",
        "from": "T20n1137_001:0580a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來應供正遍知者。",
        "from": "T20n1137_001:0580a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如實知見是善方便陀羅尼呪光明威力。",
        "from": "T20n1137_001:0580a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勢能摧滅一切諸惡。",
        "from": "T20n1137_001:0580a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無覆護者能作覆護。",
        "from": "T20n1137_001:0580a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遇一切惡緣知識。",
        "from": "T20n1137_001:0580a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒龍諸鬼夜叉羅剎。",
        "from": "T20n1137_001:0580a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及多那若鳩槃茶人非人等。",
        "from": "T20n1137_001:0580a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怖畏刀杖怨家橫害。",
        "from": "T20n1137_001:0580a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪魅󰚏禱不能嬈亂。",
        "from": "T20n1137_001:0580b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至四威儀行住坐臥不捨眾生。",
        "from": "T20n1137_001:0580b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我今者侍衛如來未曾暫離。",
        "from": "T20n1137_001:0580b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼於一切時。",
        "from": "T20n1137_001:0580b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆護眾生利益眾生。",
        "from": "T20n1137_001:0580b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初不放捨亦復如是。",
        "from": "T20n1137_001:0580b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我今勸請如來說此陀羅尼。",
        "from": "T20n1137_001:0580b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼即是菩薩即是大乘。",
        "from": "T20n1137_001:0580b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故若善男子善女人。",
        "from": "T20n1137_001:0580b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無覆護者能為覆護。",
        "from": "T20n1137_001:0580b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉滅一切鬪訟繫縛諸抂橫故。",
        "from": "T20n1137_001:0580b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時佛告執金剛神。",
        "from": "T20n1137_001:0580b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉執金剛神如汝所說。",
        "from": "T20n1137_001:0580b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能如是為眾生故勸請如來。",
        "from": "T20n1137_001:0580b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽當為汝說善法方便陀羅尼呪。",
        "from": "T20n1137_001:0580b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說呪曰。",
        "from": "T20n1137_001:0580b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優鳩一茂鳩二摩毘尼奴利反三摩陀尼四婆羅遮隷五那休休梨越多莎呵六是時如來應正遍知。",
        "from": "T20n1137_001:0580b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是莊嚴大頂勝王陀羅尼已。",
        "from": "T20n1137_001:0580b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告執金剛。",
        "from": "T20n1137_001:0580b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當如是憶念受持。",
        "from": "T20n1137_001:0580b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來今當更為汝說。",
        "from": "T20n1137_001:0580b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1137_001:0580b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跋逝唻一跋逝唻二跋逝唻陀利三跋逝唻婆帝四跋逝唻陛帝五跋逝唻達提六灼迦囉跋逝唻七灼迦囉陀唎八陀唎九陀唎十婆𠼝十一茂唎十二遮唎十三休休唎十四朋伽十五毘毘利十六唎唎尸十七唎尸唎十八嘍嘍旨十九遮隷二十周唎二十一茂唎二十二曼茶唎二十三薩波波毘賒兜二十四鵄鵄兜比唎二十五摩唻二十六呵多尼二十七婆唻二十八婆唻二十九婆地三十跋提三十一毘題三十二毘唻三十三嘍娑唻三十四舍囉鞞三十五囉娑泥三十六囉婆那唻曳三十七𭊃父藍反摩遮唎那三十八因陀跋帝三十九提提羅耶四十那謨摩醯首羅耶尼四十一利師𭊃父藍反跋尼四十二波波瞻婆尼四十三柯羅婆提四十四浮多婆提四十五薩誃猪邪反柯梯四十六蘇摩婆提四十七蘇摩𡀖𡅘莎呵四十八佛告執金剛。",
        "from": "T20n1137_001:0580c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當為汝更說神呪。",
        "from": "T20n1137_001:0580c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令行者現得長壽。",
        "from": "T20n1137_001:0580c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1137_001:0580c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呵囉一呵囉二嘻囉三時執金剛即白佛言。",
        "from": "T20n1137_001:0580c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯然世尊我當受持。",
        "from": "T20n1137_001:0580c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦致多一波致多二阿夷那三呵唎瞻婆尼四柯葛旦尼五頞哆轉舌音阿呵尼六末伽毘嚧呵尼七休娑婆帝八復娑婆帝九嘻喜梨反利十嘻利十一耶他嗜十二耶他忌尼十三耶他波爛遮十四耶他婆檐十五耶他憘陀檐十六說是呪已告執金剛。",
        "from": "T20n1137_001:0580c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是善法陀羅尼呪如來所說。",
        "from": "T20n1137_001:0580c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利一切諸眾生故。",
        "from": "T20n1137_001:0580c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慈悲故。",
        "from": "T20n1137_001:0580c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當更為汝說之。",
        "from": "T20n1137_001:0580c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如昔如來應正遍知如是妙說。",
        "from": "T20n1137_001:0580c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去來今佛之所印可誠實不虛。",
        "from": "T20n1137_001:0580c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即放大人眉間相光。",
        "from": "T20n1137_001:0580c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照一切諸佛剎土。",
        "from": "T20n1137_001:0580c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是光所照普能利益無量眾生。",
        "from": "T20n1137_001:0580c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼方諸佛見是光已。",
        "from": "T20n1137_001:0580c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各從坐起咸共尋光來至忍土。",
        "from": "T20n1137_001:0580c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至此土已同聲讚言。",
        "from": "T20n1137_001:0580c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉釋迦牟尼世尊善能付囑。",
        "from": "T20n1137_001:0580c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益安樂一切眾生。",
        "from": "T20n1137_001:0580c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉釋迦如來應正遍知。",
        "from": "T20n1137_001:0580c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利一切諸眾生故。",
        "from": "T20n1137_001:0580c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為覆護故為照明故。",
        "from": "T20n1137_001:0580c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令眾生得歡喜故。",
        "from": "T20n1137_001:0580c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是善法陀羅尼呪。",
        "from": "T20n1137_001:0580c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等諸佛所說章句亦皆如是。",
        "from": "T20n1137_001:0580c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉釋迦能廣施者。",
        "from": "T20n1137_001:0580c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子及善女人。",
        "from": "T20n1137_001:0580c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞是善法陀羅尼呪欲得利益。",
        "from": "T20n1137_001:0580c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於晨朝受持讀誦。",
        "from": "T20n1137_001:0580c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為我等諸佛所護。",
        "from": "T20n1137_001:0580c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有誦持此呪之處則為吉祥。",
        "from": "T20n1137_001:0580c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等諸佛皆在中故。",
        "from": "T20n1137_001:0580c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸眾生先來所造。",
        "from": "T20n1137_001:0580c26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極重惡業皆滅無餘。",
        "from": "T20n1137_001:0580c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令此諸善男子等。",
        "from": "T20n1137_001:0580c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足獲得二十善利。",
        "from": "T20n1137_001:0580c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者現得長壽。",
        "from": "T20n1137_001:0580c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者舍宅安隱。",
        "from": "T20n1137_001:0580c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者名譽遠聞。",
        "from": "T20n1137_001:0580c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者現得尊貴。",
        "from": "T20n1137_001:0580c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者多宜財寶。",
        "from": "T20n1137_001:0581a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者威貌殊勝。",
        "from": "T20n1137_001:0581a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者勇捍無畏。",
        "from": "T20n1137_001:0581a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者無諸疾病。",
        "from": "T20n1137_001:0581a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者安隱快樂。",
        "from": "T20n1137_001:0581a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者進行無倦。",
        "from": "T20n1137_001:0581a02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一者諸佛護念。",
        "from": "T20n1137_001:0581a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二者諸天守護。",
        "from": "T20n1137_001:0581a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三人所愛敬。",
        "from": "T20n1137_001:0581a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四現見諸佛。",
        "from": "T20n1137_001:0581a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五善友所護。",
        "from": "T20n1137_001:0581a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六毒害不加。",
        "from": "T20n1137_001:0581a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七惡鬼降伏。",
        "from": "T20n1137_001:0581a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八怨敵自消。",
        "from": "T20n1137_001:0581a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九眷屬成就。",
        "from": "T20n1137_001:0581a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十善願從心。",
        "from": "T20n1137_001:0581a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是執金剛。",
        "from": "T20n1137_001:0581a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼呪即是諸佛微密藏處。",
        "from": "T20n1137_001:0581a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛之所護念。",
        "from": "T20n1137_001:0581a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實不虛微妙善說。",
        "from": "T20n1137_001:0581a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時執金剛神白佛言。",
        "from": "T20n1137_001:0581a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我於如來所說神呪。",
        "from": "T20n1137_001:0581a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當隨喜信樂演說。",
        "from": "T20n1137_001:0581a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何是陀羅尼神呪勢力。",
        "from": "T20n1137_001:0581a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無覆護者能為覆護。",
        "from": "T20n1137_001:0581a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多利益故。",
        "from": "T20n1137_001:0581a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為如是等諸善男子善女人故。",
        "from": "T20n1137_001:0581a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當更演說善法陀羅尼呪。",
        "from": "T20n1137_001:0581a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得安樂及求度者。",
        "from": "T20n1137_001:0581a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸行人應於晨朝受持讀誦。",
        "from": "T20n1137_001:0581a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則得神呪擁護之力。",
        "from": "T20n1137_001:0581a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必當永離一切苦惱。",
        "from": "T20n1137_001:0581a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1137_001:0581a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尸棄一尸棄二支至三支至四婆嘙五婆嘙六嚧嘍七嚧嘍八時嗜九時嗜十咖囉十一咖囉十二𭌗嘻十三𭌗嘻十四頗破十五頗破十六磨系十七磨系十八呵那十九呵那二十呵那二十一馱呵二十二馱呵二十三馱呵二十四波遮二十五波遮二十六莎呵二十七是時世尊告執金剛。",
        "from": "T20n1137_001:0581a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉執金剛神。",
        "from": "T20n1137_001:0581a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼最神最驗。",
        "from": "T20n1137_001:0581a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生是故說之。",
        "from": "T20n1137_001:0581a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼神呪威力。",
        "from": "T20n1137_001:0581a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能障蔽一一毛孔。",
        "from": "T20n1137_001:0581a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍鬼一切疾疫。",
        "from": "T20n1137_001:0581a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾邪毒氣不能得入。",
        "from": "T20n1137_001:0581a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能為作解脫因緣。",
        "from": "T20n1137_001:0581a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時三千大千界主大梵天王。",
        "from": "T20n1137_001:0581a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起為佛作禮。",
        "from": "T20n1137_001:0581a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛而白佛言。",
        "from": "T20n1137_001:0581a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉世尊我今亦樂讚揚隨喜利益成就。",
        "from": "T20n1137_001:0581a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善男子行此呪者。",
        "from": "T20n1137_001:0581a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於晨朝受持讀誦是陀羅尼。",
        "from": "T20n1137_001:0581a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今世尊為欲利安擁護如是諸眾生故。",
        "from": "T20n1137_001:0581b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此善法陀羅尼呪時。",
        "from": "T20n1137_001:0581b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大梵王即說呪曰。",
        "from": "T20n1137_001:0581b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𭌗利一彌利二旨利莎呵三𭊃摩富唎莎呵四𭊃摩𭍅莎呵五波劫𭍅六弗巴僧怛唎莎呵七說是呪已即白佛言。",
        "from": "T20n1137_001:0581b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大德勝尊如是所說陀羅尼呪能悉擁護。",
        "from": "T20n1137_001:0581b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子及善女人。",
        "from": "T20n1137_001:0581b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能令得增益壽命。",
        "from": "T20n1137_001:0581b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故行者應當晨朝。",
        "from": "T20n1137_001:0581b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法讀誦修行受持。",
        "from": "T20n1137_001:0581b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋提桓因復白佛言。",
        "from": "T20n1137_001:0581b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今亦欲利益擁護如是善男子故。",
        "from": "T20n1137_001:0581b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是陀羅尼者諸佛世尊之所護念。",
        "from": "T20n1137_001:0581b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故行者若欲得是陀羅尼呪功德利者。",
        "from": "T20n1137_001:0581b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於晨朝讀誦受持。",
        "from": "T20n1137_001:0581b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時帝釋即說呪曰。",
        "from": "T20n1137_001:0581b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘尼婆囉泥一婆陀磨囒帝二致致致三懼利乾陀唎四摩囉摩羅婆五呵那末彈陀羅尼六陀羅摩利尼七斫迦婆呮八扇跋唎九扇婆唎莎呵十爾時復有四大天王毘沙門天王提頭賴吒天王毘樓勒叉天王毘樓博叉天王。",
        "from": "T20n1137_001:0581b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬而白佛言。",
        "from": "T20n1137_001:0581b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等四王亦當為護是善男子善女人等。",
        "from": "T20n1137_001:0581b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂欲修行是善方便陀羅尼者。",
        "from": "T20n1137_001:0581b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸眾生亦應晨朝受持讀誦。",
        "from": "T20n1137_001:0581b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四王即說呪曰。",
        "from": "T20n1137_001:0581b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弗巴一修弗巴二頭摩波利呵唻三阿唎波羅世帝四扇帝五涅目帝六㡌伽隷七兜帝八兜帝莎呵九爾時釋迦牟尼如來。",
        "from": "T20n1137_001:0581b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即舉右手告天帝釋大梵天王及四護世。",
        "from": "T20n1137_001:0581b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉大德諸天乃能於是善法方便陀羅尼王隨喜演說。",
        "from": "T20n1137_001:0581b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此善法陀羅尼者。",
        "from": "T20n1137_001:0581b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是諸佛之所護念。",
        "from": "T20n1137_001:0581b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等應當常善受持。",
        "from": "T20n1137_001:0581b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊又復重告執金剛神。",
        "from": "T20n1137_001:0581c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉執金剛神。",
        "from": "T20n1137_001:0581c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善方便及得長壽陀羅尼呪。",
        "from": "T20n1137_001:0581c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三呪者。",
        "from": "T20n1137_001:0581c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是十方諸佛如來之所護念稱讚印可。",
        "from": "T20n1137_001:0581c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天天王大力鬼神之所守護。",
        "from": "T20n1137_001:0581c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人等。",
        "from": "T20n1137_001:0581c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲修行者。",
        "from": "T20n1137_001:0581c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當自淨身口意已。",
        "from": "T20n1137_001:0581c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於晨朝時以殷重心。",
        "from": "T20n1137_001:0581c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法受持淨心讀誦。",
        "from": "T20n1137_001:0581c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能如是者不見天龍諸惡人鬼。",
        "from": "T20n1137_001:0581c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能加害得其便者。",
        "from": "T20n1137_001:0581c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時菩薩聲聞大眾執金剛神。",
        "from": "T20n1137_001:0581c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸天王一切鬼神龍王夜叉人非人等。",
        "from": "T20n1137_001:0581c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸共恭敬皆大歡喜受持奉行。",
        "from": "T20n1137_001:0581c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說善法方便陀羅尼經",
        "from": "T20n1137_001:0581c11_100",
        "context_with_next_sentence": false
    }
]