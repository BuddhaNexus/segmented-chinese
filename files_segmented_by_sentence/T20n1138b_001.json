[
    {
        "source_sentence": "金剛祕密善門陀羅尼經",
        "from": "T20n1138b_001:0583a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人名附東晉錄",
        "from": "T20n1138b_001:0583a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時世尊安住菩提樹下。與大弟",
        "from": "T20n1138b_001:0583a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子舍利弗目犍連等而為上首。",
        "from": "T20n1138b_001:0583a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有無量諸大菩薩摩訶薩。",
        "from": "T20n1138b_001:0583a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰金剛幢菩薩。",
        "from": "T20n1138b_001:0583a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藏菩薩。",
        "from": "T20n1138b_001:0583a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩。",
        "from": "T20n1138b_001:0583a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢劫大士亦為上首。",
        "from": "T20n1138b_001:0583a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛密迹菩薩。",
        "from": "T20n1138b_001:0583a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承佛威神發如是言。",
        "from": "T20n1138b_001:0583a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願世尊分別演說善門陀羅尼當為世間作大照明。",
        "from": "T20n1138b_001:0583a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除滅怨害惡友毒心。",
        "from": "T20n1138b_001:0583a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天龍夜叉羅剎鳩槃茶。",
        "from": "T20n1138b_001:0583a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人及非人諸大鬼神。",
        "from": "T20n1138b_001:0583a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "噉人精氣左道蠱毒。",
        "from": "T20n1138b_001:0583a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨家詐諂伺人短者。",
        "from": "T20n1138b_001:0583a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是無有救護之處。",
        "from": "T20n1138b_001:0583a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大慈當為除滅怖畏等事。",
        "from": "T20n1138b_001:0583a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安止眾生於清淨地。",
        "from": "T20n1138b_001:0583a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行住坐臥乃至夢中。",
        "from": "T20n1138b_001:0583a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常當守護不令憂惱。",
        "from": "T20n1138b_001:0583a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有是利故我今勸請。",
        "from": "T20n1138b_001:0583a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲調御當為說之。",
        "from": "T20n1138b_001:0583a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當救護大乘人心。",
        "from": "T20n1138b_001:0583a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其堅固功德智慧不退之行。",
        "from": "T20n1138b_001:0583a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉除怨害命不中夭。",
        "from": "T20n1138b_001:0583a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛密迹菩薩勸請佛已。",
        "from": "T20n1138b_001:0583a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞻仰尊顏心有顧念。",
        "from": "T20n1138b_001:0583a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大悲導師。",
        "from": "T20n1138b_001:0583a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發大雷音聲遍世界。",
        "from": "T20n1138b_001:0583a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎密迹菩薩。",
        "from": "T20n1138b_001:0583a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉善男子。",
        "from": "T20n1138b_001:0583a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今真是菩薩之人。",
        "from": "T20n1138b_001:0583a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為眾生得安樂故。",
        "from": "T20n1138b_001:0583a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發如是問。",
        "from": "T20n1138b_001:0583a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦為一切眾生。",
        "from": "T20n1138b_001:0583a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當說此善門陀羅尼。",
        "from": "T20n1138b_001:0583a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時密迹喜未曾有。",
        "from": "T20n1138b_001:0583a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願矜愍善分別之。",
        "from": "T20n1138b_001:0583a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時世尊告大士言。",
        "from": "T20n1138b_001:0583a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽諦聽善思念之。",
        "from": "T20n1138b_001:0583a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當為汝演暢其義。",
        "from": "T20n1138b_001:0583a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密迹言唯然受教。",
        "from": "T20n1138b_001:0583a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1138b_001:0583a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多絰他　漚究牟究　摩比尼　摩陀尼　槃羅遮　吟那休　休休利　跋多　莎訶爾時世尊說此灌頂陀羅尼已。",
        "from": "T20n1138b_001:0583a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復更宣說陀羅尼句。",
        "from": "T20n1138b_001:0583b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多絰他　跋闍　跋闍　跋闍達梨　跋闍波汦　跋闍毘汦　跋闍大地　遮迦羅跋時　遮迦羅達梨　達梨　達梨　跋梨　牟梨　遮隷　休休利　波伽　頻毘梨　梨梨尼留留志　遮梨　周梨　牟梨　曼荼梨此持名善能除滅一切過惡。",
        "from": "T20n1138b_001:0583b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦除一切四百諸疾。",
        "from": "T20n1138b_001:0583b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能令人命不中夭。",
        "from": "T20n1138b_001:0583b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多絰他　摩荼尼　伽伽羅尼　牟荼尼　僧波羅　牟荼尼　那奢尼　那奢尼　那奢尼　婆陀尼　蚩真兜　蚩真兜　毘梨　摩梨呵多尼　跋梨婆梨　婆地毘　地毘梨留娑梨　奢羅寧羅和寧　羅和那荼蛇　跋羅摩遮梨那　伊陀羅婆汦　地地羅蛇尼　那無摩　醯奢婆羅　梨師婆摩呼尼　波波閻摩呼尼　迦羅婆地　呼施婆地　蘇摩婆汦　蘇摩婆羅鞞莎呵　多絰他呵羅呵羅　希羅伊大摩婆遮婆伽婆莎呵　迦絰多阿㝹那　阿梨闍婆尼　迦伽大尼　阿多荼呵尼　末伽毘　盧呵尼　休娑婆汦　呼娑婆汦　希利希利蛇他時蛇他祁尼　蛇他波蘭遮　蛇他婆焰　蛇他婆嵐　蛇他希利耽　莎訶爾時世尊說此金剛祕密善門陀羅尼。",
        "from": "T20n1138b_001:0583b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令人天獲大饒益永離苦難常處安樂。",
        "from": "T20n1138b_001:0583b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是持者過去諸佛已說教化。",
        "from": "T20n1138b_001:0583b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來今佛亦共宣說。",
        "from": "T20n1138b_001:0583b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛密迹菩薩。",
        "from": "T20n1138b_001:0583b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子大悲愍念一切眾生故我今說之。",
        "from": "T20n1138b_001:0583b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說此持時。",
        "from": "T20n1138b_001:0583b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其肉髻無見頂上出大人相光照明赫奕。",
        "from": "T20n1138b_001:0583b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照十方無量世界。",
        "from": "T20n1138b_001:0583b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸佛土亦復自然。",
        "from": "T20n1138b_001:0583b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涌出光明艶色希有。",
        "from": "T20n1138b_001:0583c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殄滅一切所有幽冥。",
        "from": "T20n1138b_001:0583c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時十方人天異類。",
        "from": "T20n1138b_001:0583c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸覩是相生希有心。",
        "from": "T20n1138b_001:0583c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆作此念有何因緣。",
        "from": "T20n1138b_001:0583c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現是相光遍世界。",
        "from": "T20n1138b_001:0583c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時諸佛告眾會曰。",
        "from": "T20n1138b_001:0583c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子諦聽有佛世界名曰娑婆。",
        "from": "T20n1138b_001:0583c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛號釋迦牟尼如來。",
        "from": "T20n1138b_001:0583c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲憐愍一切眾生令安樂故。",
        "from": "T20n1138b_001:0583c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是善門陀羅尼。",
        "from": "T20n1138b_001:0583c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時眾會聞其佛說釋迦威德力皆同發聲。",
        "from": "T20n1138b_001:0583c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎釋迦希有善哉。",
        "from": "T20n1138b_001:0583c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於娑婆生大悲心。",
        "from": "T20n1138b_001:0583c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為安天人故說是持。",
        "from": "T20n1138b_001:0583c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此持希有乃是無相。",
        "from": "T20n1138b_001:0583c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實智慧之所宣說。",
        "from": "T20n1138b_001:0583c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等願樂勤修行之。",
        "from": "T20n1138b_001:0583c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得是持已亦當如是。",
        "from": "T20n1138b_001:0583c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生大悲教化眾生。",
        "from": "T20n1138b_001:0583c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛讚言善哉善哉善男子。",
        "from": "T20n1138b_001:0583c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲行此善門陀羅尼者。",
        "from": "T20n1138b_001:0583c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於晨朝嚙木澡漱。",
        "from": "T20n1138b_001:0583c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香散華攝心讀誦。",
        "from": "T20n1138b_001:0583c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令馳騁於諸境界。",
        "from": "T20n1138b_001:0583c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何此持乃是三世諸佛持說教化。",
        "from": "T20n1138b_001:0583c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等應當憶念如說修行。",
        "from": "T20n1138b_001:0583c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五辛酒肉所不經口。",
        "from": "T20n1138b_001:0583c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵行居心除捨緣務。",
        "from": "T20n1138b_001:0583c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於寂靜處然後讀誦。",
        "from": "T20n1138b_001:0583c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令行者得大功德無邊智慧。",
        "from": "T20n1138b_001:0583c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲行善門陀羅尼者當發誓願。",
        "from": "T20n1138b_001:0583c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至成佛莫令廢忘。",
        "from": "T20n1138b_001:0583c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒於晨朝讀之一遍。",
        "from": "T20n1138b_001:0583c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求現願七日七夜。",
        "from": "T20n1138b_001:0583c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤而行之無不果遂。",
        "from": "T20n1138b_001:0583c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟除過去有重罪者。",
        "from": "T20n1138b_001:0583c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於今少時不能令盡。",
        "from": "T20n1138b_001:0583c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餘諸業無不除滅。",
        "from": "T20n1138b_001:0583c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修一切諸善乃至涅槃。",
        "from": "T20n1138b_001:0583c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆能得具足二十功德之利。",
        "from": "T20n1138b_001:0583c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等二十。",
        "from": "T20n1138b_001:0583c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂長命盡壽名稱資生。",
        "from": "T20n1138b_001:0583c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色力無病勇猛精進。",
        "from": "T20n1138b_001:0583c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛護念其心調柔。",
        "from": "T20n1138b_001:0583c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天護助願行善行。",
        "from": "T20n1138b_001:0583c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思甚深義精勤不怠。",
        "from": "T20n1138b_001:0583c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光顏怡悅相好具足。",
        "from": "T20n1138b_001:0583c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯才無畏增滿善根是故世尊說此金剛祕密深奧善門陀羅尼。",
        "from": "T20n1138b_001:0583c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝應憶念至誠修行。",
        "from": "T20n1138b_001:0583c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何如此持者。",
        "from": "T20n1138b_001:0583c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸持中最為吉祥。",
        "from": "T20n1138b_001:0583c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛密迹菩薩。",
        "from": "T20n1138b_001:0583c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T20n1138b_001:0583c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今愍念擁護一切眾生。",
        "from": "T20n1138b_001:0584a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得安樂除諸哀惱。",
        "from": "T20n1138b_001:0584a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令諸惡得其便也。",
        "from": "T20n1138b_001:0584a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多絰他　尼企尼企　志志志志　婆婆婆婆　留留留留　時時時時　迦羅　迦羅　迦羅　迦羅　希利　希利　希利　希利　破破破破　摩摩摩摩　呵那　呵那　呵那　呵那　大呵　大呵　大呵　大呵　婆㝹　阿伽耶　希帝利　莎呵爾時世尊讚金剛密迹言。",
        "from": "T20n1138b_001:0584a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉大士。",
        "from": "T20n1138b_001:0584a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能說此大威神呪擁護一切。",
        "from": "T20n1138b_001:0584a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得安隱益其精氣。",
        "from": "T20n1138b_001:0584a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令諸惡人非人奪其精氣者得其便。",
        "from": "T20n1138b_001:0584a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大梵天王及諸眷屬。",
        "from": "T20n1138b_001:0584a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起偏袒右肩。",
        "from": "T20n1138b_001:0584a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌白佛言世尊。",
        "from": "T20n1138b_001:0584a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦欲隨喜佐助。",
        "from": "T20n1138b_001:0584a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦善門陀羅尼者。",
        "from": "T20n1138b_001:0584a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長眾生壽命色力除其衰患。",
        "from": "T20n1138b_001:0584a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使無伺求得其便者。",
        "from": "T20n1138b_001:0584a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願世尊加哀護助得如所願。",
        "from": "T20n1138b_001:0584a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多絰他　希利　彌利　汦利　莎呵　跋嵐　阿摩　富梨　莎呵　跋嵐　摩卑　婆羅　羯捭　弗波僧多梨　莎呵若有善男子善女人欲行此持者。",
        "from": "T20n1138b_001:0584a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於晨朝清淨澡漱已至心讀誦。",
        "from": "T20n1138b_001:0584a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋提桓因即從座起。",
        "from": "T20n1138b_001:0584a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒合掌白佛言世尊。",
        "from": "T20n1138b_001:0584a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦欲擁護一切眾生。",
        "from": "T20n1138b_001:0584a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令諸惡人非人奪精氣得其便也。",
        "from": "T20n1138b_001:0584a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼句多絰他　毘尼婆羅尼　婆大羅摩陵持　挃致置　瞿梨乾陀梨　婆羅摩羅汦　呵那摩耽多羅尼　大羅摩利尼　遮迦羅婆翅　睒婆梨　睒婆梨　莎呵。",
        "from": "T20n1138b_001:0584a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行呪此法。",
        "from": "T20n1138b_001:0584a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於晨朝清淨已至心讀誦。",
        "from": "T20n1138b_001:0584a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王即從座起。",
        "from": "T20n1138b_001:0584b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩合掌向佛。",
        "from": "T20n1138b_001:0584b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作是言我等亦欲擁護一切眾生。",
        "from": "T20n1138b_001:0584b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令諸惡人非人。",
        "from": "T20n1138b_001:0584b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伺其惡者得其便也。",
        "from": "T20n1138b_001:0584b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多絰他　弗羆修弗羆　頭摩波梨呵離　阿利夜波羅汦　羶汦涅目汦　末伽梨多兜汦兜　莎呵此呪常於晨朝清淨已。",
        "from": "T20n1138b_001:0584b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心讀誦。",
        "from": "T20n1138b_001:0584b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦牟尼佛。",
        "from": "T20n1138b_001:0584b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即舉右手讚歎梵釋四天王言。",
        "from": "T20n1138b_001:0584b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉汝等。",
        "from": "T20n1138b_001:0584b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能宣說諸佛所持陀羅尼句。",
        "from": "T20n1138b_001:0584b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告金剛密迹菩薩。",
        "from": "T20n1138b_001:0584b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若有得聞善門陀羅尼心無疑惑。",
        "from": "T20n1138b_001:0584b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於晨朝清淨三業已。",
        "from": "T20n1138b_001:0584b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心讀誦所得功德不可稱計。",
        "from": "T20n1138b_001:0584b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛祕密善門陀羅尼經",
        "from": "T20n1138b_001:0584b13_100",
        "context_with_next_sentence": false
    }
]