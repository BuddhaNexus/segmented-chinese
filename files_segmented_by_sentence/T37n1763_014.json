[
    {
        "source_sentence": "4大般涅槃經集解卷第十四",
        "from": "T37n1763_014:0435a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　雜廣解脫義　釋一等四執義",
        "from": "T37n1763_014:0435a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四相品之第四",
        "from": "T37n1763_014:0435a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又解脫者名曰甚深至真解脫者即是如來。",
        "from": "T37n1763_014:0435a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明駿案：",
        "from": "T37n1763_014:0435a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前已廣上八味竟也。",
        "from": "T37n1763_014:0435a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下更舉別義，是二乘所不能入者也。",
        "from": "T37n1763_014:0435a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此總歎甚深不可見也。",
        "from": "T37n1763_014:0435a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又解脫者名無舍宅至真解脫者即是如來。",
        "from": "T37n1763_014:0435a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明駿案：",
        "from": "T37n1763_014:0435a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雜舉眾德，隨所樂入而解釋也。",
        "from": "T37n1763_014:0435a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又解脫者名斷一切至無漏善法斷塞諸道。",
        "from": "T37n1763_014:0435a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_014:0435a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷邪見諸道也。",
        "from": "T37n1763_014:0435a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂若我無我非我非無我。",
        "from": "T37n1763_014:0435a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_014:0435a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我者常見，無我者斷見也。",
        "from": "T37n1763_014:0435a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非我非無我者，此第四家計也。",
        "from": "T37n1763_014:0435a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𨷂第三家。",
        "from": "T37n1763_014:0435a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三家云亦我，則不同第一家；",
        "from": "T37n1763_014:0435a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非我，復不同第二家。",
        "from": "T37n1763_014:0435a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言不同者，謂不全同，乃片同耳。",
        "from": "T37n1763_014:0435a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今第四家復異第三家也，言非我者，不同第三家斥我也；",
        "from": "T37n1763_014:0435a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言非無我者，不同第三家斥無我也。",
        "from": "T37n1763_014:0435a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有此言，及其撿覈，亦不得異第三家之也。",
        "from": "T37n1763_014:0435a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯斷取著不斷我見至真解脫者即是如來。",
        "from": "T37n1763_014:0435a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_014:0435a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死非我，橫生我心，此是取著，應斷也。",
        "from": "T37n1763_014:0435a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛性是理，不斷此也。",
        "from": "T37n1763_014:0435a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又解脫者名不空空。",
        "from": "T37n1763_014:0435a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_014:0435a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常樂我淨是一實，又解脫眾苦是二實，故名不空空。",
        "from": "T37n1763_014:0435a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空空者名無所有至實無解脫故名空空。",
        "from": "T37n1763_014:0435a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_014:0435b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼揵所計解脫，無常樂我淨，一空。",
        "from": "T37n1763_014:0435b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又非解脫，二空也。",
        "from": "T37n1763_014:0435b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名無所有者，體是無常又非解脫，無所有者也。",
        "from": "T37n1763_014:0435b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真解脫者則不如是至而復無有水酒等實。",
        "from": "T37n1763_014:0435b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_014:0435b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水酒瓶者，為不空空譬也。",
        "from": "T37n1763_014:0435b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃可無水而器不空，明涅槃乃空無生死耳，而常果不空也。",
        "from": "T37n1763_014:0435b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫亦爾不可說色至誰受是常樂我淨者。",
        "from": "T37n1763_014:0435b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_014:0435b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂形六道，處處見色也。",
        "from": "T37n1763_014:0435b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是義故不可說空及以不空至如來即是涅槃。",
        "from": "T37n1763_014:0435b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_014:0435b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本未釋之。",
        "from": "T37n1763_014:0435b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪是結本，相名貪境也。",
        "from": "T37n1763_014:0435b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪與所貪，繫縛三有，一切煩惱由之而起，故生死之數因果無窮。",
        "from": "T37n1763_014:0435b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永斷貪故，次第而滅，一切解脫。",
        "from": "T37n1763_014:0435b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生怖畏生死至阿耨多羅三藐三菩提。",
        "from": "T37n1763_014:0435b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_014:0435b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上廣說解脫，令人歸也。",
        "from": "T37n1763_014:0435b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法相有三。",
        "from": "T37n1763_014:0435b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者？",
        "from": "T37n1763_014:0435b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法相常定，貴其先覺。",
        "from": "T37n1763_014:0435b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先覺者，歸佛也。",
        "from": "T37n1763_014:0435b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所覺者妙，歸法也，非法不得名覺也。",
        "from": "T37n1763_014:0435b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小覺諸法非我，假用境智合用，生死可除。",
        "from": "T37n1763_014:0435b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識其合用，歸僧也。",
        "from": "T37n1763_014:0435b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸說行始，此明其終，終得盡苦，名解脫也。",
        "from": "T37n1763_014:0435b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言：",
        "from": "T37n1763_014:0435b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊至非是聲聞緣覺所知。",
        "from": "T37n1763_014:0435b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_014:0435b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃一法具二也。",
        "from": "T37n1763_014:0435b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二言俱在當也。",
        "from": "T37n1763_014:0435b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法僧常者，常即涅槃。",
        "from": "T37n1763_014:0435b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常名是一，而三事即涅槃。",
        "from": "T37n1763_014:0435b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_014:0435b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如三歸之異者，當知涅槃似不一體，欲令如來釋會三歸所以體一而義異之旨也。",
        "from": "T37n1763_014:0435b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛以眾生畏生死故，為說三名，非所以別體也。",
        "from": "T37n1763_014:0435b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有法名一義異者，此更開釋所以得有施三名之竟也。",
        "from": "T37n1763_014:0435b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫施設名義自有多塗，如佛法僧常，是名一而三義是異。",
        "from": "T37n1763_014:0435c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛以覺為義也。",
        "from": "T37n1763_014:0435c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法名不覺者，法以軌為義，非覺義也。",
        "from": "T37n1763_014:0435c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃名解脫者，即是無累，彼自有釋義也。",
        "from": "T37n1763_014:0435c03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今解脫者，是翻彼義釋也。",
        "from": "T37n1763_014:0435c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空名非善者，非善非惡也，此證名義俱異者矣。",
        "from": "T37n1763_014:0435c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我昔告彼提者，引證三歸名義不應一也。",
        "from": "T37n1763_014:0435c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就別體法僧，則體義俱異。",
        "from": "T37n1763_014:0435c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今就佛上，則其體雖一，逐義為三，不可以體一故，使義不得三也；",
        "from": "T37n1763_014:0435c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂義有三，欲令體亦別也。",
        "from": "T37n1763_014:0435c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說一為三者，隨方設化，說法不同。",
        "from": "T37n1763_014:0435c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三歸亦爾也。",
        "from": "T37n1763_014:0435c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉復言：",
        "from": "T37n1763_014:0435c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說至真解脫者即是如來。",
        "from": "T37n1763_014:0435c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_014:0435c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅聚積，名身也。",
        "from": "T37n1763_014:0435c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別苦樂，名智也。",
        "from": "T37n1763_014:0435c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃無此，故名捨也。",
        "from": "T37n1763_014:0435c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰受安樂者，上說種種樂，明非受樂，故發問也。",
        "from": "T37n1763_014:0435c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身得安樂者，有食有身、有識分別，名為苦也。",
        "from": "T37n1763_014:0435c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無食無身、不生分別，名為樂也。",
        "from": "T37n1763_014:0435c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無受樂者，無受理圓，不可以方事喻也。",
        "from": "T37n1763_014:0435c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中諸譬皆是少分耳。",
        "from": "T37n1763_014:0435c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_014:0435c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食已悶者，行地之時貪嗜五欲，譬之於食；",
        "from": "T37n1763_014:0435c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為惑所蔽，如心悶也。",
        "from": "T37n1763_014:0435c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出外欲吐者，標心離苦，義言出耳。",
        "from": "T37n1763_014:0435c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲除煩惱，吐已還者，修道斷結，功登果就，俯入生死，譬如還也。",
        "from": "T37n1763_014:0435c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同伴問者，如迦葉今所問也。",
        "from": "T37n1763_014:0435c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若言差者，如來解釋果地之妙極也。",
        "from": "T37n1763_014:0435c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯別昔曰捨身捨智，言虛不實也。",
        "from": "T37n1763_014:0435c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉復言：",
        "from": "T37n1763_014:0435c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生不滅至如來之性即是解脫。",
        "from": "T37n1763_014:0435c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案慧朗曰：",
        "from": "T37n1763_014:0435c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉因釋解脫有此句也，故以為難，請重釋也。",
        "from": "T37n1763_014:0435c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉：",
        "from": "T37n1763_014:0435c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_014:0435c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是事不然至不可以譬烏鵲之音。",
        "from": "T37n1763_014:0435c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_014:0435c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以鳥譬鳥、以聲譬聲，遍取同鳥，不得相比也；",
        "from": "T37n1763_014:0435c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分取，可譬佛聲也。",
        "from": "T37n1763_014:0435c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛讚迦葉：",
        "from": "T37n1763_014:0436a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉至知諸法性皆亦如是。",
        "from": "T37n1763_014:0436a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_014:0436a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣者，少分因緣也。",
        "from": "T37n1763_014:0436a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能匹者，非遍喻也。",
        "from": "T37n1763_014:0436a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為喻者，少分也。",
        "from": "T37n1763_014:0436a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉復言：",
        "from": "T37n1763_014:0436a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何如來至成就滿故名大般涅槃。",
        "from": "T37n1763_014:0436a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_014:0436a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡聖不可相譬；",
        "from": "T37n1763_014:0436a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若分取，可借凡以明聖也。",
        "from": "T37n1763_014:0436a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不具足者，逆罪有二種：",
        "from": "T37n1763_014:0436a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者但以心重，為不具足；",
        "from": "T37n1763_014:0436a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者以心重事重，為具足。",
        "from": "T37n1763_014:0436a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言：",
        "from": "T37n1763_014:0436a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊至當作如是護持正法。",
        "from": "T37n1763_014:0436a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案智秀曰：",
        "from": "T37n1763_014:0436a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉領旨，佛讚述也。",
        "from": "T37n1763_014:0436a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第十四",
        "from": "T37n1763_014:0436a10_100",
        "context_with_next_sentence": false
    }
]