[
    {
        "source_sentence": "2大般涅槃經集解卷第二十三",
        "from": "T37n1763_023:0469a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣舉十二種醫譬明經力",
        "from": "T37n1763_023:0469a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　釋船師譬　釋蛇脫皮譬釋先陀一",
        "from": "T37n1763_023:0469a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　名四實義　明改定經文失義旨　事　釋賣乳加水譬菩薩品第二復次善男子！",
        "from": "T37n1763_023:0469a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如良醫至唯除必死一闡提輩。",
        "from": "T37n1763_023:0469a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0469a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答問云何處煩惱，煩惱不能染。",
        "from": "T37n1763_023:0469a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如醫療眾病，不為病所污也。",
        "from": "T37n1763_023:0469a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自下為經作譬也。",
        "from": "T37n1763_023:0469a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八術者，一治身、二治眼、三治瘡、四治小兒、五治耶、六治毒、七治胎、八占星宿，知所屬可治不可治也。",
        "from": "T37n1763_023:0469a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一方有二千偈。",
        "from": "T37n1763_023:0469a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿薩闍病不可治者，喻二重罪。",
        "from": "T37n1763_023:0469a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於昔契經不治之病，明涅槃難治能治也。",
        "from": "T37n1763_023:0469a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯不能治必死病者，不可加治，非難治也。",
        "from": "T37n1763_023:0469a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0469a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘契經譬良醫。",
        "from": "T37n1763_023:0469a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經有八種藥，謂苦、空、無常、無我、不淨、慈心、因緣、觀佛。",
        "from": "T37n1763_023:0469a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅八種病，四倒、三毒及等分也。",
        "from": "T37n1763_023:0469a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有十譬，悉明經有勝力，能拔重罪。",
        "from": "T37n1763_023:0469a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八藥者，謂八正道也。",
        "from": "T37n1763_023:0469a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過八藥者，此經理圓，功德力勝，故言過也。",
        "from": "T37n1763_023:0469a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_023:0469a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答第十七問也。",
        "from": "T37n1763_023:0469a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第一譬，昔法華以前經教也。",
        "from": "T37n1763_023:0469a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至後凡十二譬，至文自述也。",
        "from": "T37n1763_023:0469a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0469a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如良醫至唯除生盲一闡提輩。",
        "from": "T37n1763_023:0469a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案法瑤曰：",
        "from": "T37n1763_023:0469a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前言滅八倒，此言生八解，開二乘常住慧眼也。",
        "from": "T37n1763_023:0469a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0469a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如良醫至若丸若散一切諸藥。",
        "from": "T37n1763_023:0469a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案法瑤曰：",
        "from": "T37n1763_023:0469a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八藥譬除八倒病也。",
        "from": "T37n1763_023:0469a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0469a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吐下者，明罪報相也。",
        "from": "T37n1763_023:0469b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗身者，身意止觀也。",
        "from": "T37n1763_023:0469b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌鼻者，謂數息也。",
        "from": "T37n1763_023:0469b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薰身者，即薰禪也。",
        "from": "T37n1763_023:0469b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗者，不淨觀也。",
        "from": "T37n1763_023:0469b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丸者，總觀也。",
        "from": "T37n1763_023:0469b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散者，別觀也。",
        "from": "T37n1763_023:0469b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而貧愚人不欲服之。",
        "from": "T37n1763_023:0469b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮白：",
        "from": "T37n1763_023:0469b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重罪既重障發心，故不肯服也。",
        "from": "T37n1763_023:0469b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0469b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前明二乘人，滅八倒生八解；",
        "from": "T37n1763_023:0469b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明凡夫及犯重者不信。",
        "from": "T37n1763_023:0469b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良醫愍念即將是人至以藥力故所患得除。",
        "from": "T37n1763_023:0469b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0469b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄是其歸處，譬舍宅也。",
        "from": "T37n1763_023:0469b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏苦發心，譬強服也。",
        "from": "T37n1763_023:0469b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應障不障，譬患除也。",
        "from": "T37n1763_023:0469b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫不信者，以不顧無常、不懼罪對，誹謗以之而生。",
        "from": "T37n1763_023:0469b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨終之時，謗罪對現，懼而改悔，於是息謗生信也。",
        "from": "T37n1763_023:0469b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常罪對，是思善之堂，為舍宅也。",
        "from": "T37n1763_023:0469b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生必歸死，為還也。",
        "from": "T37n1763_023:0469b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦相切迫，然後始信，為強與服。",
        "from": "T37n1763_023:0469b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女人產者兒衣不出至悉令發心除一闡提。",
        "from": "T37n1763_023:0469b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0469b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯重之人有微善根，能生發心，譬女也。",
        "from": "T37n1763_023:0469b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未發心時，罪所纏裹，譬兒衣也。",
        "from": "T37n1763_023:0469b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄之報未除，譬衣不出也。",
        "from": "T37n1763_023:0469b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0469b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明今之信皆由昔善，昔善為母、今信為子也。",
        "from": "T37n1763_023:0469b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解不即現，猶兒衣也。",
        "from": "T37n1763_023:0469b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱未斷，為不出也。",
        "from": "T37n1763_023:0469b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞經則無惑不除，猶子衣即出也。",
        "from": "T37n1763_023:0469b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言：",
        "from": "T37n1763_023:0469b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊至云何能與作菩提因。",
        "from": "T37n1763_023:0469b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0469b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔經所明，是二重罪人，聞經不生道果；",
        "from": "T37n1763_023:0469b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何今日能令作因？",
        "from": "T37n1763_023:0469b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更申向旨也。",
        "from": "T37n1763_023:0469b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言：",
        "from": "T37n1763_023:0469b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_023:0469b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸眾生至以是因緣我命得全。",
        "from": "T37n1763_023:0469b24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0469b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二重罪人，聞經得悟。",
        "from": "T37n1763_023:0469b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果轉明，歎此經恩也。",
        "from": "T37n1763_023:0469b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0469b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知今之解，藉昔微善，譬處胎也。",
        "from": "T37n1763_023:0469b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由經力故生信，除不信之病，與母藥也。",
        "from": "T37n1763_023:0469b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以母善不朽，所以子解得生，譬我命得全也。",
        "from": "T37n1763_023:0469b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇哉我母受大苦惱至作菩提因除一闡提。",
        "from": "T37n1763_023:0469c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0469c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為罪所纏，譬受苦時也。",
        "from": "T37n1763_023:0469c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪既已久，譬十月。",
        "from": "T37n1763_023:0469c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善根不斷，譬懷抱也。",
        "from": "T37n1763_023:0469c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今得發心，譬生後也。",
        "from": "T37n1763_023:0469c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脩行無漏，譬推乾也。",
        "from": "T37n1763_023:0469c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除斷結惑，譬去濕也。",
        "from": "T37n1763_023:0469c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "制身口惡，譬除便利也。",
        "from": "T37n1763_023:0469c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持常樂，譬乳餔也。",
        "from": "T37n1763_023:0469c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0469c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者為母也，方等為藥，常解喻子。",
        "from": "T37n1763_023:0469c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令人受持，譬與母藥也。",
        "from": "T37n1763_023:0469c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由經故有慧，譬命全也。",
        "from": "T37n1763_023:0469c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脩十地行，譬十月也。",
        "from": "T37n1763_023:0469c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除愛慢故，譬推乾去濕也。",
        "from": "T37n1763_023:0469c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得果之日，酬於本期，譬報恩也。",
        "from": "T37n1763_023:0469c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力者，三十二相乃至十力也。",
        "from": "T37n1763_023:0469c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四部弟子，如侍衛也。",
        "from": "T37n1763_023:0469c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0469c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如良醫至唯除大龍一闡提輩。",
        "from": "T37n1763_023:0469c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0469c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醫譬佛也，子譬菩薩也。",
        "from": "T37n1763_023:0469c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上況術，譬佛性常也。",
        "from": "T37n1763_023:0469c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若龍若蝮，譬二重罪也。",
        "from": "T37n1763_023:0469c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥譬名味句身也。",
        "from": "T37n1763_023:0469c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "革履譬書之於紙墨也。",
        "from": "T37n1763_023:0469c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觸諸虫者，譬讀誦也。",
        "from": "T37n1763_023:0469c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒為之消，譬發心也。",
        "from": "T37n1763_023:0469c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0469c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良醫譬經文。",
        "from": "T37n1763_023:0469c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子譬常住二字也。",
        "from": "T37n1763_023:0469c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明但聞二字，已是滅惡，況具聞經耶？",
        "from": "T37n1763_023:0469c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅四重五逆，故譬塗革履，觸諸毒虫，毒即消也。",
        "from": "T37n1763_023:0469c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0469c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人至除不橫死一闡提輩。",
        "from": "T37n1763_023:0469c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0469c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒藥譬佛性。",
        "from": "T37n1763_023:0469c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以始聞故，譬新也。",
        "from": "T37n1763_023:0469c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾譬有為行也，聲者譬讀誦也，死者譬煩惱滅也。",
        "from": "T37n1763_023:0469c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0469c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常理如藥，文字如鼓，以藥毒故，聞鼓則死。",
        "from": "T37n1763_023:0469c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其理深故，聽之者罪滅。",
        "from": "T37n1763_023:0469c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0469c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如闇夜至於諸善法無所營作。",
        "from": "T37n1763_023:0469c25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0469c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘經所說，理不同故，譬闇也。",
        "from": "T37n1763_023:0469c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日譬此經也。",
        "from": "T37n1763_023:0469c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重舉兩者聞此經，如天之澤，萬物滋長也。",
        "from": "T37n1763_023:0469c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0469c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《法華》中八十聲聞者，誤也，彼經云「八千聲聞」也。",
        "from": "T37n1763_023:0469c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如良醫至其餘皆菩薩摩訶薩。",
        "from": "T37n1763_023:0470a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0470a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醫譬此經也。",
        "from": "T37n1763_023:0470a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非人譬犯重也。",
        "from": "T37n1763_023:0470a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙藥譬常住二字也。",
        "from": "T37n1763_023:0470a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使者譬受持此二字者也。",
        "from": "T37n1763_023:0470a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速與彼人譬為說此二字也。",
        "from": "T37n1763_023:0470a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自往譬具足得聞也。",
        "from": "T37n1763_023:0470a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0470a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡四部之中，未聞常住者，及外道犯重五逆非法之徒，為他人子也。",
        "from": "T37n1763_023:0470a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經為良醫，理為妙藥，文存傳理，為遣使送藥也。",
        "from": "T37n1763_023:0470a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理貴流通，流通要由文字，為勅語使言卿持此藥送與彼人也。",
        "from": "T37n1763_023:0470a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞經之理，眾魔惡友不能為患，猶人有藥力，鬼神遠去也。",
        "from": "T37n1763_023:0470a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0470a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯四重五逆者，一往聞經，為見使也。",
        "from": "T37n1763_023:0470a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟於理，為吾威德也。",
        "from": "T37n1763_023:0470a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此二事，其罪得滅也。",
        "from": "T37n1763_023:0470a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_023:0470a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第八譬，明經力彼及外道也。",
        "from": "T37n1763_023:0470a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醫譬佛也，使譬菩薩，藥譬此經也。",
        "from": "T37n1763_023:0470a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為彼解說，如送與也。",
        "from": "T37n1763_023:0470a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如聾人至所以者何無因緣故。",
        "from": "T37n1763_023:0470a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案寶亮曰：",
        "from": "T37n1763_023:0470a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九，偏為闡提作譬也。",
        "from": "T37n1763_023:0470a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞經不能生信，如聾之不聞。",
        "from": "T37n1763_023:0470a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如良醫至終不能治一闡提輩。",
        "from": "T37n1763_023:0470a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0470a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯重戒人，不斷善根，方之闡提，微為勝故，譬王也。",
        "from": "T37n1763_023:0470a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必入地獄，譬必死病也。",
        "from": "T37n1763_023:0470a20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報在未來，於今不現，譬腹內也。",
        "from": "T37n1763_023:0470a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律能治罪，譬下藥也。",
        "from": "T37n1763_023:0470a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸令看律而不肯信，譬不肯服也。",
        "from": "T37n1763_023:0470a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經力發夢，使地獄受苦，獄是下道，譬糞門生皰也。",
        "from": "T37n1763_023:0470a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦受畜生之報，譬虫血雜出也。",
        "from": "T37n1763_023:0470a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0470a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卿不見我腹內事者，不信斷善根，受地獄報也。",
        "from": "T37n1763_023:0470a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應服下藥者，闡提初入地獄，便有三念，為自知也。",
        "from": "T37n1763_023:0470a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經說勝理，如醫白王也。",
        "from": "T37n1763_023:0470a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良醫術力者，譬常理也。",
        "from": "T37n1763_023:0470a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱處譬地獄也。",
        "from": "T37n1763_023:0470a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_023:0470a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十譬，諸佛善說五時經教也。",
        "from": "T37n1763_023:0470a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如良醫至必死之人一闡提輩。",
        "from": "T37n1763_023:0470b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0470b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此語勢及之，非義宗也。",
        "from": "T37n1763_023:0470b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂其罪既重，法不能救耳。",
        "from": "T37n1763_023:0470b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0470b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來八譬，悉以呪經也。",
        "from": "T37n1763_023:0470b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此兩譬，佛菩薩也。",
        "from": "T37n1763_023:0470b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_023:0470b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十一譬，由以除八倒為喻也。",
        "from": "T37n1763_023:0470b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如良醫至最尊最勝眾經中王。",
        "from": "T37n1763_023:0470b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0470b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來教法先淺後深，唯涅槃究竟，無惑不除也。",
        "from": "T37n1763_023:0470b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_023:0470b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十二譬，與《法華》之前經作喻也。",
        "from": "T37n1763_023:0470b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除三毒并等分，及四倒故，故言八術。",
        "from": "T37n1763_023:0470b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能博達過八種者，譬涅槃經教有十二術也。",
        "from": "T37n1763_023:0470b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此兩譬所以就人為喻者，遣物疑也。",
        "from": "T37n1763_023:0470b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如大船至化度眾生亦復如是。",
        "from": "T37n1763_023:0470b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0470b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次答船師問也。",
        "from": "T37n1763_023:0470b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死苦海，人皆求度，而經能勸人脩學。",
        "from": "T37n1763_023:0470b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛度生死，更無餘道，乘大涅槃以救苦人也。",
        "from": "T37n1763_023:0470b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下二風譬，初譬速度、後譬自慶，皆勸美也。",
        "from": "T37n1763_023:0470b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_023:0470b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自前四問明因中利益，此明果中利益也。",
        "from": "T37n1763_023:0470b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三意：",
        "from": "T37n1763_023:0470b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第一，先明諸佛得度已，還濟眾生也。",
        "from": "T37n1763_023:0470b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_023:0470b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答第十八問。",
        "from": "T37n1763_023:0470b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下三問，皆明經力能為外物作緣。",
        "from": "T37n1763_023:0470b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "船有二種：",
        "from": "T37n1763_023:0470b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者為眾生作境界，正以信教故，便能生善也；",
        "from": "T37n1763_023:0470b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者妙佛住果地，還度生死也。",
        "from": "T37n1763_023:0470b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人至墮於地獄畜生餓鬼。",
        "from": "T37n1763_023:0470b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案寶亮曰：",
        "from": "T37n1763_023:0470b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二意，度生死所以速者，經之力也。",
        "from": "T37n1763_023:0470b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0470b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生雖有五戒十善，欲度大海，若住此善則不離生死，聞此經則超越也。",
        "from": "T37n1763_023:0470b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0470b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸行為船，涅槃為風，脩行萬行，必須圓解常教。",
        "from": "T37n1763_023:0470b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人至大涅槃經生清淨信。",
        "from": "T37n1763_023:0470b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案寶亮曰：",
        "from": "T37n1763_023:0470c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三意，自慶也。",
        "from": "T37n1763_023:0470c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0470c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生為苦所切，思善反惡之時，惑經脩行，日進無退也。",
        "from": "T37n1763_023:0470c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0470c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厲物情也。",
        "from": "T37n1763_023:0470c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死輪轉所以不息，正由不值涅槃之風。",
        "from": "T37n1763_023:0470c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈不深發增上之心耶？",
        "from": "T37n1763_023:0470c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蛇脫皮至亦名常住無有變易。",
        "from": "T37n1763_023:0470c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0470c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上說涅槃能度生死，非餘契經，以此釋之也。",
        "from": "T37n1763_023:0470c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛之真身是實，涅槃說實，見實則生死盡也。",
        "from": "T37n1763_023:0470c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應身非實，契經以之為實，不見實故，生死不盡也。",
        "from": "T37n1763_023:0470c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0470c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蛇脫皮者，止明雙樹一迹耳。",
        "from": "T37n1763_023:0470c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖現捨生死，而迹無生滅，法身常一也。",
        "from": "T37n1763_023:0470c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0470c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答第十九問，向云乘涅槃船濟度眾生，實無生滅。",
        "from": "T37n1763_023:0470c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物以王宮之生、雙樹之滅為疑，故以此譬拂滯也。",
        "from": "T37n1763_023:0470c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0470c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如菴羅樹至如來常住無有變易。",
        "from": "T37n1763_023:0470c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0470c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次答問云何觀三寶猶如天意樹也。",
        "from": "T37n1763_023:0470c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上勸脩經，今說脩經之法。",
        "from": "T37n1763_023:0470c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二意：",
        "from": "T37n1763_023:0470c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先解如來身密，猶如無意樹也。",
        "from": "T37n1763_023:0470c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次解口密，如先陀婆也。",
        "from": "T37n1763_023:0470c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰：",
        "from": "T37n1763_023:0470c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天樹隨意感變，人樹逐時而遷。",
        "from": "T37n1763_023:0470c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷變雖異，而樹實常存。",
        "from": "T37n1763_023:0470c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉人樹，則天樹可知也。",
        "from": "T37n1763_023:0470c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故近取此樹，遠況三寶也。",
        "from": "T37n1763_023:0470c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此譬與船師、蛇脫皮，通明一身始終之示現也。",
        "from": "T37n1763_023:0470c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0470c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答第二十問。",
        "from": "T37n1763_023:0470c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向舉蛇譬，一往但明非實滅也；",
        "from": "T37n1763_023:0470c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今寄樹譬有三時之變，廣明初生乃至涅槃一應之跡也。",
        "from": "T37n1763_023:0470c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有五重明義：",
        "from": "T37n1763_023:0470c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一舉樹譬，雖有三時之變，實則不滅；",
        "from": "T37n1763_023:0470c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明口密，能以非常之言，密詮常旨；",
        "from": "T37n1763_023:0470c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三因明三寶興衰之相，以人不行，故義言滅也；",
        "from": "T37n1763_023:0470c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四勸立丈夫之志，既理由人弘，故抑抗其辭也；",
        "from": "T37n1763_023:0470c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五更出末法三寶衰滅時節之處所也。",
        "from": "T37n1763_023:0471a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_023:0471a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開此答中有三意，第一明三寶有衰盛之相、第二明法滅之相貌也、第三教行者作業也。",
        "from": "T37n1763_023:0471a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此下，先明佛寶現有滅也。",
        "from": "T37n1763_023:0471a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_023:0471a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來密語甚深難解至凡夫品類所能信也。",
        "from": "T37n1763_023:0471a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0471a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次顯口密也。",
        "from": "T37n1763_023:0471a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼智臣善解密語，可以類求脩經之法也。",
        "from": "T37n1763_023:0471a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以先陀婆譬四非常，一名四實。",
        "from": "T37n1763_023:0471a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脩心常法者，知有常因，能得常果也。",
        "from": "T37n1763_023:0471a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0471a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明口密也。",
        "from": "T37n1763_023:0471a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼以一名表四種之實，此一偏教亦表常我四實理也。",
        "from": "T37n1763_023:0471a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有智之人，因四非常悟於常樂。",
        "from": "T37n1763_023:0471a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事同應身雖有三時，而識法身是常存也。",
        "from": "T37n1763_023:0471a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0471a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如波羅奢樹至以是眾生薄福德故。",
        "from": "T37n1763_023:0471a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0471a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更以三樹譬涅槃衰滅之時。",
        "from": "T37n1763_023:0471a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不解密語，常雨不降，不得常果也。",
        "from": "T37n1763_023:0471a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水陸枯悴，譬無人天善也。",
        "from": "T37n1763_023:0471a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥無勢力，譬餘契經也。",
        "from": "T37n1763_023:0471a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0471a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第三炎明三寶衰滅之相，言末代不能流傳也。",
        "from": "T37n1763_023:0471a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0471a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來正法至隨順不逆為眾生說。",
        "from": "T37n1763_023:0471a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0471a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上言滅後者，此明法欲盡時不解密語，受學經者抄略前後分作多部，唯諸菩薩解密語者不違經旨也。",
        "from": "T37n1763_023:0471a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0471a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如牧牛女至復加二分詣市賣之。",
        "from": "T37n1763_023:0471a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0471a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬行經之人，廣上懶墮求利之事也。",
        "from": "T37n1763_023:0471a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0471a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加二不已乃至於八，無復乳味。",
        "from": "T37n1763_023:0471a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡比丘為利養故，安置浮辭，使理味難解也。",
        "from": "T37n1763_023:0471a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有一人為子納婦至乳之為味諸味中最。",
        "from": "T37n1763_023:0471a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0471a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一人者，譬密語菩薩。",
        "from": "T37n1763_023:0471a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將使弟子為化，紹嗣不絕，譬之納婦也。",
        "from": "T37n1763_023:0471b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化必須法，譬求乳也。",
        "from": "T37n1763_023:0471b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求法為物，譬待客也。",
        "from": "T37n1763_023:0471b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有法之處，譬之市也。",
        "from": "T37n1763_023:0471b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得財乃說，譬索價也。",
        "from": "T37n1763_023:0471b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦受持，譬用作糜也。",
        "from": "T37n1763_023:0471b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_023:0471b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復改換文辭，故是筌常比之，餘教不可譬。",
        "from": "T37n1763_023:0471b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_023:0471b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我涅槃後正法未滅至能滅正法色香美味。",
        "from": "T37n1763_023:0471b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0471b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合第一加水也。",
        "from": "T37n1763_023:0471b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸惡人雖復讀誦至莊嚴文飾無義之語。",
        "from": "T37n1763_023:0471b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0471b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合第二加。",
        "from": "T37n1763_023:0471b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抄前著後抄後著前至諸惡比丘是魔伴侶。",
        "from": "T37n1763_023:0471b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0471b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合第三加。",
        "from": "T37n1763_023:0471b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受畜一切不淨之物至如牧牛女多加水乳。",
        "from": "T37n1763_023:0471b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_023:0471b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合第四加也。",
        "from": "T37n1763_023:0471b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曇纖曰：",
        "from": "T37n1763_023:0471b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止取抄前著後為一加，抄後著前為二加，前著中後為三加，中後著前為四加。",
        "from": "T37n1763_023:0471b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡比丘亦復如是至以是義故名大涅槃。",
        "from": "T37n1763_023:0471b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案智秀曰：",
        "from": "T37n1763_023:0471b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通舉上譬略合也。",
        "from": "T37n1763_023:0471b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0471b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子至如蜂採味汝亦如是。",
        "from": "T37n1763_023:0471b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_023:0471b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四，勸立丈夫志也。",
        "from": "T37n1763_023:0471b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_023:0471b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蚊子澤至無上正法將滅不久。",
        "from": "T37n1763_023:0471b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_023:0471b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五，更出末法三寶衰滅時節之處所也。",
        "from": "T37n1763_023:0471b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第二十三",
        "from": "T37n1763_023:0471b23_100",
        "context_with_next_sentence": false
    }
]