[
    {
        "source_sentence": "佛說大摩里支菩薩經卷第五",
        "from": "T21n1257_005:0276a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T21n1257_005:0276a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣天息災奉　詔譯",
        "from": "T21n1257_005:0276a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切持誦者　　志心歸命禮",
        "from": "T21n1257_005:0276a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩里支菩薩　　分別如意輪",
        "from": "T21n1257_005:0276a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八輻祕密相　　能斷諸煩惱",
        "from": "T21n1257_005:0276a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人依法行　　一切皆成就",
        "from": "T21n1257_005:0276a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此成就法。",
        "from": "T21n1257_005:0276a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於素帛上或樺皮上。",
        "from": "T21n1257_005:0276a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫八輻輪。",
        "from": "T21n1257_005:0276a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其輪心書微妙梵字。",
        "from": "T21n1257_005:0276a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以輪八輻即為八方位。",
        "from": "T21n1257_005:0276a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於輪東輻畫第五菩薩。",
        "from": "T21n1257_005:0276a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南輻畫第六菩薩。",
        "from": "T21n1257_005:0276a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西輻畫第十二菩薩。",
        "from": "T21n1257_005:0276a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北輻畫第三菩薩。",
        "from": "T21n1257_005:0276a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東南輻畫第四菩薩。",
        "from": "T21n1257_005:0276a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西南輻畫第九菩薩。",
        "from": "T21n1257_005:0276a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西北輻畫第八菩薩。",
        "from": "T21n1257_005:0276a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東北輻畫第十菩薩。",
        "from": "T21n1257_005:0276a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸輻上書本尊真言一切成就真言。",
        "from": "T21n1257_005:0276a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱從裏面寫真言頭。",
        "from": "T21n1257_005:0276a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次於輪輞周圍。",
        "from": "T21n1257_005:0276a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書嚩囉羅菩薩根本真言挽多隷菩薩真言摩里支菩薩真言摩細菩薩等真言。",
        "from": "T21n1257_005:0276a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名一切成就如意寶輪。",
        "from": "T21n1257_005:0276a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若起首作法先求清淨地位。",
        "from": "T21n1257_005:0276b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得已即入隨意樂處。",
        "from": "T21n1257_005:0276b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結跏趺坐。",
        "from": "T21n1257_005:0276b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求福德智慧速獲圓滿。",
        "from": "T21n1257_005:0276b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既安坐已結期克印。",
        "from": "T21n1257_005:0276b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安心上額上頂上。",
        "from": "T21n1257_005:0276b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即念吽𠷑吒三字真言。",
        "from": "T21n1257_005:0276b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言已却出外。",
        "from": "T21n1257_005:0276b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧前所說儀則㡧像安置地位獻香水。",
        "from": "T21n1257_005:0276b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦辟除真言灑淨飲食等。",
        "from": "T21n1257_005:0276b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作觀想。",
        "from": "T21n1257_005:0276b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想自心中有阿盎二字。",
        "from": "T21n1257_005:0276b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變此阿字成其月輪。",
        "from": "T21n1257_005:0276b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變其盎字成其日輪。",
        "from": "T21n1257_005:0276b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於日輪上有迦茶去聲呼二字。",
        "from": "T21n1257_005:0276b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其二字有日月之光如鍊金色。",
        "from": "T21n1257_005:0276b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復出種種光明。",
        "from": "T21n1257_005:0276b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此光明變成天人師。",
        "from": "T21n1257_005:0276b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是想已即自作禮。",
        "from": "T21n1257_005:0276b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而誦真言以申供養。",
        "from": "T21n1257_005:0276b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1257_005:0276b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引婆訖旦二合鉢囉二合底蹉此名獻食真言。",
        "from": "T21n1257_005:0276b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引補瑟半二合鉢囉二合底蹉此名花供養真言。",
        "from": "T21n1257_005:0276b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引度半鉢囉二合底蹉此名香供養真言。",
        "from": "T21n1257_005:0276b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引禰半鉢囉二合底蹉此名燈供養真言。",
        "from": "T21n1257_005:0276b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引巘毯鉢囉二合底蹉此名塗香供養真言。",
        "from": "T21n1257_005:0276b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引娑嚩二合引賀誦此真言獻閼伽水。",
        "from": "T21n1257_005:0276b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻已安置左邊。",
        "from": "T21n1257_005:0276b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有力者具辦供養。",
        "from": "T21n1257_005:0276b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無力者但作觀想供養。",
        "from": "T21n1257_005:0276b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既供養已歸命三寶。",
        "from": "T21n1257_005:0276b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今歸依佛歸依法歸依僧。",
        "from": "T21n1257_005:0276b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有諸功德我今盡隨喜。",
        "from": "T21n1257_005:0276b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切罪悉皆得消滅。",
        "from": "T21n1257_005:0276b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今發此最上菩提心自利利他願。",
        "from": "T21n1257_005:0276b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我成佛廣度一切眾生。",
        "from": "T21n1257_005:0276b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三發大願已。",
        "from": "T21n1257_005:0276b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入於三昧觀想。",
        "from": "T21n1257_005:0276b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸法無我性空。",
        "from": "T21n1257_005:0276b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦無我真言。",
        "from": "T21n1257_005:0276b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引舜儞也二合多惹拏二合曩嚩日囉二合娑嚩二合婆引嚩引怛摩二合俱憾誦已復作觀想。",
        "from": "T21n1257_005:0276c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想彼真言如鏡中像如水中影。",
        "from": "T21n1257_005:0276c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至三界之相其義亦然。",
        "from": "T21n1257_005:0276c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦淨三業真言。",
        "from": "T21n1257_005:0276c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引娑嚩二合婆引嚩󰡊馱引薩里嚩二合達里摩二合娑嚩二合婆引嚩󰡊度引阿憾如是誦已。",
        "from": "T21n1257_005:0276c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想月輪之內有一唵字。",
        "from": "T21n1257_005:0276c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變成吉祥毘盧遮那佛。",
        "from": "T21n1257_005:0276c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛蓮華藏師子座。",
        "from": "T21n1257_005:0276c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上結跏趺坐。",
        "from": "T21n1257_005:0276c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身色如金。",
        "from": "T21n1257_005:0276c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手結毘盧印入三摩地。",
        "from": "T21n1257_005:0276c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴寶冠一切莊嚴善相圓滿。",
        "from": "T21n1257_005:0276c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼佛心中生其月輪。",
        "from": "T21n1257_005:0276c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有微妙梵字作深黃色。",
        "from": "T21n1257_005:0276c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字變成無優花樹。",
        "from": "T21n1257_005:0276c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其樹上復有月輪。",
        "from": "T21n1257_005:0276c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生一𤚥字放大光明。",
        "from": "T21n1257_005:0276c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護所居作法地位。",
        "from": "T21n1257_005:0276c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次成就法能去除冤家。",
        "from": "T21n1257_005:0276c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於十方釘橛。",
        "from": "T21n1257_005:0276c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從東方起首釘橛。",
        "from": "T21n1257_005:0276c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_005:0276c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引阿里迦二合摩細吽𠷑吒娑嚩二合引賀誦真言已。",
        "from": "T21n1257_005:0276c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想十方菩薩為大惡相。",
        "from": "T21n1257_005:0276c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面如明王有其猪頭。",
        "from": "T21n1257_005:0276c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口出利牙種種光焰。",
        "from": "T21n1257_005:0276c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身有四臂右手執金剛杵鉤針。",
        "from": "T21n1257_005:0276c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手亦執金剛杵羂索線。",
        "from": "T21n1257_005:0276c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切菩薩手臂。",
        "from": "T21n1257_005:0276c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色相幖幟具足現之。",
        "from": "T21n1257_005:0276c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令一切魔王隱沒不現。",
        "from": "T21n1257_005:0276c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦東方真言菩薩。",
        "from": "T21n1257_005:0276c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩里迦引摩細娑嚩二合引賀南方真言菩薩唵引桉多里馱二合引曩摩細娑嚩二合引賀西方真言菩薩唵引帝引祖引摩細娑嚩二合引賀北方真言菩薩唵引波那引羯囉二合摩細娑嚩二合引賀東南方真言菩薩唵引烏那野摩細娑嚩二合引賀西南方真言菩薩唵引嚩曩摩細娑嚩二合引賀西北方真言菩薩唵引唧嚩囉摩細娑嚩二合引賀東北方真言菩薩唵引摩賀唧嚩囉摩細娑嚩二合引賀上方真言菩薩唵引波囉引羯囉二合摩細娑嚩二合引賀下方真言菩薩唵引摩引里支吽薩里嚩二合尾近曩二合引努槎引那野吽𠷑吒若釘下方橛時。",
        "from": "T21n1257_005:0277a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦下方真言即作觀想。",
        "from": "T21n1257_005:0277a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上從地面下至水輪。",
        "from": "T21n1257_005:0277a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有眾魔皆悉禁縛。",
        "from": "T21n1257_005:0277a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又觀橛頂生其日輪。",
        "from": "T21n1257_005:0277a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日有暗字變成火焰。",
        "from": "T21n1257_005:0277a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相如劫火光明照曜等俱胝日。",
        "from": "T21n1257_005:0277a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釘十方橛儀則皆同。",
        "from": "T21n1257_005:0277a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想自心出一月輪。",
        "from": "T21n1257_005:0277a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被橛頂暗字光照月輪。",
        "from": "T21n1257_005:0277a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變自身成摩里支菩薩相。",
        "from": "T21n1257_005:0277a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身如閻浮檀金光明如日。",
        "from": "T21n1257_005:0277a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴寶塔著紅天衣。",
        "from": "T21n1257_005:0277a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腕釧耳環寶帶瓔珞。",
        "from": "T21n1257_005:0277a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸雜花種種莊嚴。",
        "from": "T21n1257_005:0277a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八臂三面三眼光明照曜。",
        "from": "T21n1257_005:0277a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脣如曼度迦花。",
        "from": "T21n1257_005:0277a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上寶塔中有毘盧遮那佛。",
        "from": "T21n1257_005:0277a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戴無憂樹花鬘。",
        "from": "T21n1257_005:0277a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執羂索弓無優樹枝及線。",
        "from": "T21n1257_005:0277a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手執金剛杵針鉤箭。",
        "from": "T21n1257_005:0277a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正面善相微笑。",
        "from": "T21n1257_005:0277a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深黃色開目。",
        "from": "T21n1257_005:0277a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脣如朱色勇猛自在。",
        "from": "T21n1257_005:0277a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左面作猪相。",
        "from": "T21n1257_005:0277a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醜惡忿怒口出利牙。",
        "from": "T21n1257_005:0277a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貌如大青寶色。",
        "from": "T21n1257_005:0277a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明等十二日。",
        "from": "T21n1257_005:0277a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顰眉吐舌見者驚怖。",
        "from": "T21n1257_005:0277a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右面作深紅色。",
        "from": "T21n1257_005:0277a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蓮華寶有大光明。",
        "from": "T21n1257_005:0277a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於摩里支殿上有大無優樹。",
        "from": "T21n1257_005:0277a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹下復有毘盧遮那佛。",
        "from": "T21n1257_005:0277a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴寶冠身如金色。",
        "from": "T21n1257_005:0277b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善相圓滿結毘盧大印。",
        "from": "T21n1257_005:0277b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘猪車立如舞踏。",
        "from": "T21n1257_005:0277b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端正怡顏如童女相。",
        "from": "T21n1257_005:0277b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想摩里支菩薩下有風輪。",
        "from": "T21n1257_005:0277b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪有憾字變成羅睺大曜如月蝕相。",
        "from": "T21n1257_005:0277b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作觀想法。",
        "from": "T21n1257_005:0277b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝則對日夜則對月。",
        "from": "T21n1257_005:0277b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法得成。",
        "from": "T21n1257_005:0277b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常宜修習一切所求無不成就。",
        "from": "T21n1257_005:0277b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次曼拏羅中有四菩薩圍繞。",
        "from": "T21n1257_005:0277b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方菩薩真言曰。",
        "from": "T21n1257_005:0277b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引挽多引隷嚩那引隷嚩囉引賀目契阿母迦悉地摩引迦里沙二合野𠺁娑嚩二合賀如是菩薩身作紅色。",
        "from": "T21n1257_005:0277b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一猪面三眼四臂。",
        "from": "T21n1257_005:0277b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執羂索鉤右手執針金剛杵。",
        "from": "T21n1257_005:0277b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著紅天衣隨意降伏無不成就。",
        "from": "T21n1257_005:0277b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方菩薩真言曰。",
        "from": "T21n1257_005:0277b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引嚩多引隷嚩那引隷嚩囉引賀目契薩里嚩二合努瑟吒二合引喃引目欠滿馱滿馱吽娑嚩二合引賀如是菩薩身作黃色著黃天衣。",
        "from": "T21n1257_005:0277b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執羂索金剛杵。",
        "from": "T21n1257_005:0277b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持無優樹枝及針。",
        "from": "T21n1257_005:0277b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縫惡者口眼。",
        "from": "T21n1257_005:0277b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方菩薩真言曰。",
        "from": "T21n1257_005:0277b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引嚩多引隷嚩那引隷嚩囉引隷嚩囉引賀目契薩里嚩二合努瑟吒二合喃引娑旦二合娑野鑁娑嚩二合賀如是菩薩亦作黃色著黃天衣。",
        "from": "T21n1257_005:0277b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手執金剛杵針。",
        "from": "T21n1257_005:0277b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執羂索無優樹枝。",
        "from": "T21n1257_005:0277b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能禁止一切惡者。",
        "from": "T21n1257_005:0277b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方菩薩真言曰。",
        "from": "T21n1257_005:0277b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引嚩多引隷嚩那引隷嚩囉引隷嚩囉引賀目契薩里嚩二合薩怛嚩二合引彌引嚩舍摩引曩野斛引娑嚩二合引賀如是菩薩衣服莊嚴色相如前。",
        "from": "T21n1257_005:0277b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身光照曜如日初出。",
        "from": "T21n1257_005:0277c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手執箭金剛杵。",
        "from": "T21n1257_005:0277c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執無優樹枝弓。",
        "from": "T21n1257_005:0277c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛敬一切眾生。",
        "from": "T21n1257_005:0277c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦者依此儀則而作觀想。",
        "from": "T21n1257_005:0277c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結金剛鉤印誦真言請召。",
        "from": "T21n1257_005:0277c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印以二頭指背鉤二小指。",
        "from": "T21n1257_005:0277c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交臂竪手。",
        "from": "T21n1257_005:0277c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1257_005:0277c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𠺁吽挽斛引鉢囉二合嚩里多二合野既請召已。",
        "from": "T21n1257_005:0277c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作觀智三昧以除惡魔。",
        "from": "T21n1257_005:0277c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即獻閼伽水供養誦此真言。",
        "from": "T21n1257_005:0277c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引阿里伽二合鉢囉二合底蹉娑嚩二合引賀次獻音樂誦此真言。",
        "from": "T21n1257_005:0277c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引摩引儞焰二合鉢囉二合底娑嚩二合引賀次請召菩薩眷屬。",
        "from": "T21n1257_005:0277c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結摩里支印誦此真言。",
        "from": "T21n1257_005:0277c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引曀呬曳二合呬尾迦悉多仡里二合引拏引迦里沙二合曳引其摩里支印。",
        "from": "T21n1257_005:0277c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手合掌。",
        "from": "T21n1257_005:0277c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令指頭微開。",
        "from": "T21n1257_005:0277c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二大指附於中指如環相。",
        "from": "T21n1257_005:0277c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結跏趺坐安印於臍中。",
        "from": "T21n1257_005:0277c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成請召法。",
        "from": "T21n1257_005:0277c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印於一切事皆得通用。",
        "from": "T21n1257_005:0277c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想口中有一𤚥字變成金剛杵。",
        "from": "T21n1257_005:0277c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名法印。",
        "from": "T21n1257_005:0277c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦真言。",
        "from": "T21n1257_005:0277c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引摩引里支引阿怛囉二合散儞呬多引禰引婆嚩阿努囉訖妒二合彌引婆嚩酥覩引瑟喻二合引彌引婆嚩酥補瑟喻二合引彌引婆嚩薩里嚩二合悉𭝵切身彌引鉢囉二合野蹉誦此真言時。",
        "from": "T21n1257_005:0277c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即移前臍上印。",
        "from": "T21n1257_005:0277c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安心上頸上額上頂上。",
        "from": "T21n1257_005:0277c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如受灌頂。",
        "from": "T21n1257_005:0277c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結大印。",
        "from": "T21n1257_005:0277c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作金剛合掌。",
        "from": "T21n1257_005:0277c26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指屈入掌中。",
        "from": "T21n1257_005:0277c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安在頭上心想毘盧遮那佛身相金色。",
        "from": "T21n1257_005:0277c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦結毘盧印。",
        "from": "T21n1257_005:0277c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦此真言。",
        "from": "T21n1257_005:0277c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引僕欠誦真言已。",
        "from": "T21n1257_005:0278a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大印竪二中指作金剛縛。",
        "from": "T21n1257_005:0278a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名金剛波羅蜜印。",
        "from": "T21n1257_005:0278a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安在額上。",
        "from": "T21n1257_005:0278a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想阿閦佛身相黑色。",
        "from": "T21n1257_005:0278a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印觸地復誦真言。",
        "from": "T21n1257_005:0278a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合薩怛嚩二合吽誦真言已。",
        "from": "T21n1257_005:0278a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "移中指作如寶形。",
        "from": "T21n1257_005:0278a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名寶波羅蜜印。",
        "from": "T21n1257_005:0278a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安右耳上。",
        "from": "T21n1257_005:0278a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想寶生如來。",
        "from": "T21n1257_005:0278a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身淺黃色手作施願相。",
        "from": "T21n1257_005:0278a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_005:0278a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合囉怛曩二合怛覽二合引誦真言已。",
        "from": "T21n1257_005:0278a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前印中指作蓮華形。",
        "from": "T21n1257_005:0278a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名法波羅蜜印。",
        "from": "T21n1257_005:0278a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安頂後。",
        "from": "T21n1257_005:0278a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想無量光佛。",
        "from": "T21n1257_005:0278a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身紅色作入定相。",
        "from": "T21n1257_005:0278a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_005:0278a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合達里摩二合呬里二合誦真言已。",
        "from": "T21n1257_005:0278a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以二手合掌。",
        "from": "T21n1257_005:0278a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十指相叉。",
        "from": "T21n1257_005:0278a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指頭相對。",
        "from": "T21n1257_005:0278a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名羯摩波羅蜜印。",
        "from": "T21n1257_005:0278a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安左耳上。",
        "from": "T21n1257_005:0278a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想不空成就佛。",
        "from": "T21n1257_005:0278a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身綠色結無畏印。",
        "from": "T21n1257_005:0278a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_005:0278a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合羯里摩二合惡阿鼻詵左𤚥誦真言已作忿怒相。",
        "from": "T21n1257_005:0278a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手各作金剛拳。",
        "from": "T21n1257_005:0278a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如同被甲為自擁護。",
        "from": "T21n1257_005:0278a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛拳二手相並。",
        "from": "T21n1257_005:0278a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安心上頸上。",
        "from": "T21n1257_005:0278a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於心上頸上額上如繫花鬘相。",
        "from": "T21n1257_005:0278a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以二手左右彈指歡喜。",
        "from": "T21n1257_005:0278a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "T21n1257_005:0278a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合覩灑斛誦真言已。",
        "from": "T21n1257_005:0278a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想心上有一阿字變成月輪。",
        "from": "T21n1257_005:0278a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪上生一惡字。",
        "from": "T21n1257_005:0278a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變此惡字成羯摩金剛杵。",
        "from": "T21n1257_005:0278a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結羯摩印誦此真言。",
        "from": "T21n1257_005:0278a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合薩怛嚩二合僧誐囉二合賀嚩日囉二合囉怛曩二合摩努多囉嚩日囉二合達里摩二合誐引野乃引嚩日囉二合羯里摩二合迦嚕婆嚩誦真言已。",
        "from": "T21n1257_005:0278a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手作金剛拳心。",
        "from": "T21n1257_005:0278a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想金剛嬉戲菩薩。",
        "from": "T21n1257_005:0278b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦此真言。",
        "from": "T21n1257_005:0278b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合羅引細引誦金剛鬘真言。",
        "from": "T21n1257_005:0278b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合摩引隷引誦金剛歌真言。",
        "from": "T21n1257_005:0278b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合詣引帝引誦金剛舞真言。",
        "from": "T21n1257_005:0278b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合涅里二合怛曳二合引誦金剛花真言。",
        "from": "T21n1257_005:0278b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合補瑟閉二合引誦金剛香真言。",
        "from": "T21n1257_005:0278b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合度閉引誦金剛燈真言。",
        "from": "T21n1257_005:0278b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合禰閉引誦金剛塗香真言。",
        "from": "T21n1257_005:0278b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合巘弟誦內外供養真言。",
        "from": "T21n1257_005:0278b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引阿迦引魯引目欠薩里嚩二合達里摩二合𧹞引阿引儞也二合努怛半二合怛嚩如是一切普同供養生大歡喜。",
        "from": "T21n1257_005:0278b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即自隨心而作觀想。",
        "from": "T21n1257_005:0278b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如身心困倦作觀未成。",
        "from": "T21n1257_005:0278b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即却持誦須不急不慢。",
        "from": "T21n1257_005:0278b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文字分明言音和雅無令漏失。",
        "from": "T21n1257_005:0278b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求見一切賢聖。",
        "from": "T21n1257_005:0278b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所欲成就勿生疑惑。",
        "from": "T21n1257_005:0278b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻閼伽水及飲食等供養。",
        "from": "T21n1257_005:0278b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手持鈴杵誦此真言。",
        "from": "T21n1257_005:0278b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合建致引囉拏多鉢囉二合引囉拏多三鉢囉二合引囉拏多沒馱剎引怛囉二合鉢囉二合左引隷儞引鉢囉二合惹拏二合播引囉彌多引曩那娑嚩二合婆引吠引馱囉紇里二合那野嚩覩引沙尼吽吽吽誦真言已。",
        "from": "T21n1257_005:0278c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即擲金剛杵誦此真言。",
        "from": "T21n1257_005:0278c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引薩里嚩二合怛他引誐多悉地嚩日囉二合三摩野底瑟姹二合曀釤怛鑁二合引馱引囉野彌呬入聲呬呬呬呬吽誦真言已。",
        "from": "T21n1257_005:0278c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即讚歎佛誦此真言。",
        "from": "T21n1257_005:0278c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿芻引毘也二合嚩日囉二合摩賀引惹拏二合曩嚩日囉二合馱覩摩賀引沒馱怛里二合曼拏羅怛里二合嚩日囉二合誐囉二合具引沙嚩日囉二合曩謨引娑覩二合帝吠引魯引左曩摩賀引󰡊馱嚩日囉二合扇引多摩賀引囉帝鉢囉二合訖里二合底鉢囉二合婆引娑嚩二合覽引達里𤚥二合禰引舍嚩日囉二合曩謨引娑覩二合帝囉怛曩二合囉惹酥儼鼻哩也二合佉縛日囉二合迦引舍蘇儞里摩二合羅娑嚩二合婆引嚩󰡊駄儞里隷二合引波婆引沙玉呬也二合曩謨娑覩二合帝嚩日囉二合阿彌多摩賀引囉引惹儞里嚩二合羯囉波二合佉嚩日囉二合達里二合迦囉引誐波引囉彌多引鉢囉二合引鉢多二合沙嚩日囉二合曩謨引娑覩二合帝阿目引伽嚩日囉二合僧沒馱薩里嚩二合引舍波里布囉迦󰡊馱娑嚩二合婆引嚩三部多嚩日囉二合薩怛嚩二合曩謨引娑覩二合帝如是誦已。",
        "from": "T21n1257_005:0278c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法阿闍梨即得喫食。",
        "from": "T21n1257_005:0278c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至行住坐臥洗浴經行一切之事。",
        "from": "T21n1257_005:0278c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須依本尊部儀則方得成就。",
        "from": "T21n1257_005:0278c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若降伏息災。",
        "from": "T21n1257_005:0278c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須一日三時誦真言。",
        "from": "T21n1257_005:0278c28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻諸供養及作觀想。",
        "from": "T21n1257_005:0278c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛之法其義亦然。",
        "from": "T21n1257_005:0278c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自所作善隨意迴向。",
        "from": "T21n1257_005:0279a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求之事決定成就。",
        "from": "T21n1257_005:0279a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大摩里支菩薩經卷第五",
        "from": "T21n1257_005:0279a02_100",
        "context_with_next_sentence": false
    }
]