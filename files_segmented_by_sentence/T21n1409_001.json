[
    {
        "source_sentence": "佛說聖最勝陀羅尼經",
        "from": "T21n1409_001:0924b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T21n1409_001:0924b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1409_001:0924b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1409_001:0924b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在波囉鉢多國星左大城虞彌曩精舍。",
        "from": "T21n1409_001:0924b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過是夏已至九月二十日。",
        "from": "T21n1409_001:0924b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一苾芻名嚩野佉曩。",
        "from": "T21n1409_001:0924b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼苾芻出星左大城。",
        "from": "T21n1409_001:0924b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往支那城相去四由旬。",
        "from": "T21n1409_001:0924b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其路中見一大人。",
        "from": "T21n1409_001:0924b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身長三丈面長四尺。",
        "from": "T21n1409_001:0924b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知是文殊師利菩薩即時禮足長跪合掌白菩薩言。",
        "from": "T21n1409_001:0924b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何現身而來至此。",
        "from": "T21n1409_001:0924b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有因緣。",
        "from": "T21n1409_001:0924b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩答言如是如是。",
        "from": "T21n1409_001:0924b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻此閻浮提內諸眾生等。",
        "from": "T21n1409_001:0924b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當有病苦。",
        "from": "T21n1409_001:0924b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿修羅迦樓羅等住須彌山王一面。",
        "from": "T21n1409_001:0924b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸天人互相交戰。",
        "from": "T21n1409_001:0924b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故虛空中日月無光星辰不現。",
        "from": "T21n1409_001:0924b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天人敗已修羅獲勝。",
        "from": "T21n1409_001:0924b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸鬼神因斯得便。",
        "from": "T21n1409_001:0924b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化女人形惱亂眾生生諸疾病。",
        "from": "T21n1409_001:0924b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或頭痛腹痛眼耳鼻痛。",
        "from": "T21n1409_001:0924b28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生癰癤瘰癧痔漏疥癩瘡癬。",
        "from": "T21n1409_001:0924b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復瘧病。",
        "from": "T21n1409_001:0924b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其瘧發時或隔一日二日三日四日。",
        "from": "T21n1409_001:0924c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至風癀痰癊一切惡病。",
        "from": "T21n1409_001:0924c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又閻浮提內降大風雨。",
        "from": "T21n1409_001:0924c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或寒或熱或澇或旱。",
        "from": "T21n1409_001:0924c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五穀不豐人民飢儉悉皆中夭。",
        "from": "T21n1409_001:0924c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復現虎狼師子藐拏等獸。",
        "from": "T21n1409_001:0924c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侵損有情奪人精氣。",
        "from": "T21n1409_001:0924c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾難競來逼惱。",
        "from": "T21n1409_001:0924c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大人說是事已告苾芻言。",
        "from": "T21n1409_001:0924c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有聖最勝陀羅尼。",
        "from": "T21n1409_001:0924c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長善根能除諸惡。",
        "from": "T21n1409_001:0924c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人發清淨心。",
        "from": "T21n1409_001:0924c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香華等供養三寶及諸賢聖。",
        "from": "T21n1409_001:0924c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於七晝夜潔淨齋戒誦此陀羅尼是諸眾難即得消除。",
        "from": "T21n1409_001:0924c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T21n1409_001:0924c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨婆誐嚩覩尾摩攞沒地儼鼻囉誐。",
        "from": "T21n1409_001:0924c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哩𡁠二合多囉引惹寫怛他誐多寫怛儞也二合他尾摩羅誐哩𡁠二合帝尾摩羅踰儞始引阿攞誐帝阿羅誐帝娑嚩二合引賀曩摩娑哩嚩二合儞嚩囉拏尾瑟劍二合毘曩薩怛二合他引誐多寫怛儞也二合他引呬摩呬摩賀引摩呬娑嚩二合引賀引曩謨虞拏迦囉寫怛他引誐多寫怛儞也二合他引誐誐曩引迦哩誐誐曩三婆吠誐誐曩枳哩底二合帝引娑嚩二合引賀引曩謨三滿多巘度多摩寫怛他引誐多寫怛儞也二合他引三摩曳引娑嚩二合引賀引曩謨阿波囉引𡁠多誐引彌曩娑怛二合他引誐多寫怛儞也二合他引阿摩引摩呬引娑嚩二合引賀引曩謨摩曩娑擔二合婆寫怛他引誐多寫怛儞也二合他引摩曩尾戍弟鉢訥彌二合濕嚩二合哩鉢訥摩二合三婆吠緊迦哩呬旦迦哩曳引娑嚩二合引賀引曩謨薩哩嚩二合沒馱󰂛地薩怛嚩二合引喃引曩謨阿哩也二合曼祖室哩二合野怛儞也二合他引惹曳引惹曳引羅麼地二合呬引摩呬引摩賀引摩呬引娑嚩二合引賀引曩謨阿哩也二合引嚩路枳帝引濕嚩二合囉寫󰂛地薩怛嚩二合寫怛儞也二合他引誐誐曩引茶曳二合誐誐曩三婆吠引誐誐曩摩特曳二合誐誐曩尾訖蘭二合帝引曀賀曳二合呬娑嚩二合賀引曩謨阿哩也二合三滿多跋捺囉二合寫怛他引誐多寫怛儞也二合他引呬跋捺哩二合摩賀引跋捺哩二合阿蜜哩二合多跋捺哩二合尾誐多囉惹細摩賀引尾誐多囉惹細娑嚩二合引賀引曩莫入阿哩也二合尾摩羅枳哩底二合怛寫怛他引誐多寫阿儞枳哩底二合多薩哩嚩二合𡁠儞去毘嚩日羅二合三婆吠嚩日羅二合鼻捺迦哩娑嚩二合引賀引曩莫薩哩嚩二合沒馱冒地薩怛嚩二合引喃引怛儞也二合他引契多迦囉鼻入嚩二合羅儞曳娑嚩二合引賀引惹敢切婆儞娑擔二合婆儞謨賀儞奔拏哩迦引野娑嚩二合引賀引謨賀難帝難婆儞曳引娑嚩二合引賀引努囉尾努哩曳迦引羅尾訖哩二合帝娑嚩二合引賀散引帝引娑尾二合儞哩嚩二合波儞曳引娑嚩二合引賀引努囉尾努哩曳娑嚩二合引賀引覽摩祖拏引野娑嚩二合引賀引路枳迦路俱多囉引野娑嚩二合引賀引阿倪也二合曩尾輪達儞曳引娑嚩二合引賀引馱引覩迦哩曳引娑嚩二合引賀引彌引伽娑普二合吒曩引野娑嚩二合引賀引沒囉二合憾弭二合誐囉二合賀引野娑嚩二合引賀引薩哩嚩二合迦哩摩二合毘始訖多二合引野娑嚩二合引賀引薩哩嚩二合沒馱毘僧娑訖哩三合多引野娑嚩二合引賀引曀迦室凌二合誐引野娑嚩二合引賀部多引野娑嚩二合引賀引阿部多引野娑嚩二合引賀引薩哩嚩二合引訥契波舍摩引野娑嚩二合引賀引爾時文殊師利菩薩。",
        "from": "T21n1409_001:0925b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此聖最勝陀羅尼已告苾芻言。",
        "from": "T21n1409_001:0925b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等依此正法儀則。",
        "from": "T21n1409_001:0925b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日志誠發清淨心。",
        "from": "T21n1409_001:0925b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供七比丘供養三寶及諸賢聖。",
        "from": "T21n1409_001:0925b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於初夜分作護摩然火。",
        "from": "T21n1409_001:0925b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除災患速得消散。",
        "from": "T21n1409_001:0925b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1409_001:0925b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此正法受持讀誦廣為人說。",
        "from": "T21n1409_001:0925b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸病皆得除愈。",
        "from": "T21n1409_001:0925b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次文殊師利菩薩告苾芻言。",
        "from": "T21n1409_001:0925b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1409_001:0925b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此聖最勝陀羅尼。",
        "from": "T21n1409_001:0925b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大明力廣利眾生。",
        "from": "T21n1409_001:0925b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提所有國界城邑聚落處處流轉。",
        "from": "T21n1409_001:0925b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生聽聞受持。",
        "from": "T21n1409_001:0925b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T21n1409_001:0925b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於此經讀誦一遍。",
        "from": "T21n1409_001:0925b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身病苦速得除愈。",
        "from": "T21n1409_001:0925b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若讀兩遍。",
        "from": "T21n1409_001:0925b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻子男女所有病苦悉得除愈。",
        "from": "T21n1409_001:0925b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若讀三遍。",
        "from": "T21n1409_001:0925b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眷屬所有病苦悉得除愈。",
        "from": "T21n1409_001:0925b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若讀四遍。",
        "from": "T21n1409_001:0925b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一國人民所有病苦悉得除愈。",
        "from": "T21n1409_001:0925b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若讀五遍。",
        "from": "T21n1409_001:0925b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王之封境諸小國土一切人民。",
        "from": "T21n1409_001:0925b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆獲安樂無諸疾病。",
        "from": "T21n1409_001:0925b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次文殊師利菩薩言。",
        "from": "T21n1409_001:0925b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此正法利益廣大甚為希有。",
        "from": "T21n1409_001:0925b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速為流傳令諸有情獲上功德。",
        "from": "T21n1409_001:0925b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於此經心生輕慢。",
        "from": "T21n1409_001:0925b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為受持讀誦。",
        "from": "T21n1409_001:0925b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為人演說流傳。",
        "from": "T21n1409_001:0925b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國界之內一切眾生。",
        "from": "T21n1409_001:0925b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不得聽聞者。",
        "from": "T21n1409_001:0925b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人獲過如五逆罪。",
        "from": "T21n1409_001:0925b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故苾芻於聖最勝陀羅尼。",
        "from": "T21n1409_001:0925b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信敬受持無令忘失。",
        "from": "T21n1409_001:0925b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼須彌山王一面住者。",
        "from": "T21n1409_001:0925b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天及阿修羅乾闥婆等。",
        "from": "T21n1409_001:0925b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我自調伏使閻浮提眾生獲大安樂。",
        "from": "T21n1409_001:0925b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時文殊師利說是法已忽然不現。",
        "from": "T21n1409_001:0925b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩野佉曩苾芻聞其所說。",
        "from": "T21n1409_001:0925b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心大歡喜信受奉行。",
        "from": "T21n1409_001:0925b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說聖最勝陀羅尼經",
        "from": "T21n1409_001:0925b27_100",
        "context_with_next_sentence": false
    }
]