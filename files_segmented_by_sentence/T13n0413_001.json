[
    {
        "source_sentence": "百千頌大集經地藏菩薩請問法",
        "from": "T13n0413_001:0790a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身讚",
        "from": "T13n0413_001:0790a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國公",
        "from": "T13n0413_001:0790a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食邑三千戶賜紫贈司空謚大鑒正號大廣智大興善寺三藏沙門不空奉　詔譯歸命禮法身，　　住於諸有情；",
        "from": "T13n0413_001:0790a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼由不遍知，　　輪迴於三有。",
        "from": "T13n0413_001:0790a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其性即生死，　　淨時亦復然；",
        "from": "T13n0413_001:0790a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨是涅槃，　　亦即是法身。",
        "from": "T13n0413_001:0790a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如乳相雜，　　醍醐不可得；",
        "from": "T13n0413_001:0790a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如煩惱相雜，　　法界不可見。",
        "from": "T13n0413_001:0790a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如淨乳已，　　酥精妙無垢；",
        "from": "T13n0413_001:0790a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如淨其煩惱，　　法界極清淨。",
        "from": "T13n0413_001:0790a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如燈在其瓶，　　光耀無所有；",
        "from": "T13n0413_001:0790a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如在煩惱瓶，　　法界不照耀。",
        "from": "T13n0413_001:0790a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼彼令一邊，　　其瓶若得穴；",
        "from": "T13n0413_001:0790a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由彼彼一邊，　　光明而外出。",
        "from": "T13n0413_001:0790a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以三摩地杵，　　破壞煩惱瓶；",
        "from": "T13n0413_001:0790a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿於虛空，　　普遍光照耀。",
        "from": "T13n0413_001:0790a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界亦不生，　　亦不曾壞滅；",
        "from": "T13n0413_001:0790a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切時不染，　　初中常無垢。",
        "from": "T13n0413_001:0790a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如吠瑠璃，　　常時極光明；",
        "from": "T13n0413_001:0790a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石藏以覆蔽，　　彼光不照耀。",
        "from": "T13n0413_001:0790b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是煩惱覆，　　法界妙清淨；",
        "from": "T13n0413_001:0790b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不照於生死，　　於涅槃光明。",
        "from": "T13n0413_001:0790b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有性若有功，　　則見於真金；",
        "from": "T13n0413_001:0790b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無性若有功，　　困而無所獲。",
        "from": "T13n0413_001:0790b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如糠覆其上，　　不名為粳米；",
        "from": "T13n0413_001:0790b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱覆其上，　　亦不名為佛。",
        "from": "T13n0413_001:0790b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得離於糠，　　顯現於粳米；",
        "from": "T13n0413_001:0790b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離於煩惱，　　法身得顯現。",
        "from": "T13n0413_001:0790b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間作譬喻，　　芭蕉無堅實；",
        "from": "T13n0413_001:0790b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有貞實果，　　食味如甘露。",
        "from": "T13n0413_001:0790b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如無實生死，　　流轉煩惱海；",
        "from": "T13n0413_001:0790b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其果即佛體，　　甘露施有施。",
        "from": "T13n0413_001:0790b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是於諸種，　　相似生其果；",
        "from": "T13n0413_001:0790b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無種亦無果，　　智者必不信。",
        "from": "T13n0413_001:0790b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種子則其性，　　諸法之所依；",
        "from": "T13n0413_001:0790b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第若能淨，　　獲得成佛位。",
        "from": "T13n0413_001:0790b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月常無垢，　　以五種覆蔽：",
        "from": "T13n0413_001:0790b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲、霧與烟等，　　羅睺手及塵。",
        "from": "T13n0413_001:0790b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是心光明，　　覆蔽以五垢：",
        "from": "T13n0413_001:0790b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪愛、瞋恚、眠、　　掉舉與疑惑。",
        "from": "T13n0413_001:0790b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如火洗其衣，　　種種垢不淨；",
        "from": "T13n0413_001:0790b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若擲於火中，　　燒垢不燒衣。",
        "from": "T13n0413_001:0790b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空類諸契經，　　所有如來說；",
        "from": "T13n0413_001:0790b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切斷煩惱，　　不曾壞其性。",
        "from": "T13n0413_001:0790b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如地下水，　　常住而清淨；",
        "from": "T13n0413_001:0790b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智隱於煩惱，　　清淨亦復然。",
        "from": "T13n0413_001:0790b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界亦非我、　　非女亦非男；",
        "from": "T13n0413_001:0790b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離一切執，　　云何分別我？",
        "from": "T13n0413_001:0790b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法無所著，　　女男不可得；",
        "from": "T13n0413_001:0790c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪盲調伏故，　　示現男女相。",
        "from": "T13n0413_001:0790c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常苦空性，　　心淨慮有三；",
        "from": "T13n0413_001:0790c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最勝心淨慮，　　諸法無自性。",
        "from": "T13n0413_001:0790c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如胞胎孕子，　　有之而不現；",
        "from": "T13n0413_001:0790c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如煩惱所覆，　　法實不可見。",
        "from": "T13n0413_001:0790c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別有四種，　　所生大造者：",
        "from": "T13n0413_001:0790c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別我、我所、　　名想及境界。",
        "from": "T13n0413_001:0790c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛大願，　　無所有無相；",
        "from": "T13n0413_001:0790c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自覺相應故，　　諸佛常法性。",
        "from": "T13n0413_001:0790c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如言兔有角，　　分別而非有；",
        "from": "T13n0413_001:0790c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切法，　　分別不可得。",
        "from": "T13n0413_001:0790c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分析如微塵，　　分別不可得；",
        "from": "T13n0413_001:0790c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如初後亦爾，　　智云何分別？",
        "from": "T13n0413_001:0790c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是和合生，　　和合亦滅壞；",
        "from": "T13n0413_001:0790c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一法自不生，　　云何愚分別？",
        "from": "T13n0413_001:0790c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兔、牛二角喻，　　此名遍計相；",
        "from": "T13n0413_001:0790c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依住於中道，　　如善逝法性。",
        "from": "T13n0413_001:0790c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如月及星宿，　　現於清水器；",
        "from": "T13n0413_001:0790c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "影像而顯現，　　如是圓成相。",
        "from": "T13n0413_001:0790c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中亦為善，　　常恒不欺誑；",
        "from": "T13n0413_001:0790c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼無五種我，　　云何我分別？",
        "from": "T13n0413_001:0790c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如熱時水，　　故名為熱水；",
        "from": "T13n0413_001:0790c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則其冷時，　　則名為冷水。",
        "from": "T13n0413_001:0790c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆蔽煩惱網，　　是則名為心；",
        "from": "T13n0413_001:0790c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若離其煩惱，　　則名為等覺。",
        "from": "T13n0413_001:0790c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼識緣於色，　　影像極清淨；",
        "from": "T13n0413_001:0790c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生亦不滅，　　法界無形相。",
        "from": "T13n0413_001:0790c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳識緣於聲，　　清淨識三種；",
        "from": "T13n0413_001:0790c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自分別聞，　　法界無形相。",
        "from": "T13n0413_001:0791a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻依香而嗅，　　無色亦無形；",
        "from": "T13n0413_001:0791a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻識是真如，　　法界應分別。",
        "from": "T13n0413_001:0791a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌界自性空，　　味界性遠離；",
        "from": "T13n0413_001:0791a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無依亦無識，　　法界自性故。",
        "from": "T13n0413_001:0791a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨身自性，　　所觸和合相；",
        "from": "T13n0413_001:0791a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離於所緣，　　我說為法界。",
        "from": "T13n0413_001:0791a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法意為最，　　離能、所分別；",
        "from": "T13n0413_001:0791a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界無自性，　　法界而分別。",
        "from": "T13n0413_001:0791a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能見聞而嗅，　　是味及所觸；",
        "from": "T13n0413_001:0791a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑜伽法是知，　　如是圓成相。",
        "from": "T13n0413_001:0791a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼、耳及與鼻，　　舌、身及末那；",
        "from": "T13n0413_001:0791a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六處皆清淨，　　如是彼之相。",
        "from": "T13n0413_001:0791a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心見有二種：",
        "from": "T13n0413_001:0791a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　世間、出世間；",
        "from": "T13n0413_001:0791a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我執為流轉，　　自覺是真如。",
        "from": "T13n0413_001:0791a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡是涅槃，　　若盡貪及癡；",
        "from": "T13n0413_001:0791a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺彼是佛體，　　有情歸依處。",
        "from": "T13n0413_001:0791a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切於此身，　　有智及無智；",
        "from": "T13n0413_001:0791a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫縛自分別，　　由悟得解脫。",
        "from": "T13n0413_001:0791a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提不遠近，　　不來亦不去；",
        "from": "T13n0413_001:0791a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞滅及顯現，　　於此煩惱網。",
        "from": "T13n0413_001:0791a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說於眾契經，　　住於自思惟；",
        "from": "T13n0413_001:0791a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照以智慧燈，　　即得最勝寂。",
        "from": "T13n0413_001:0791a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提不遠想，　　亦無隣近想；",
        "from": "T13n0413_001:0791a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是六境影像，　　皆由如是知。",
        "from": "T13n0413_001:0791a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如水與乳合，　　同在於一器；",
        "from": "T13n0413_001:0791a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鵝飲盡其乳，　　其水如常在。",
        "from": "T13n0413_001:0791a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是煩惱雜，　　智在於一器；",
        "from": "T13n0413_001:0791a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑜伽者飲智，　　棄捨於煩惱。",
        "from": "T13n0413_001:0791a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我、我執，　　乃至所取執；",
        "from": "T13n0413_001:0791b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見二無我，　　有種而滅壞。",
        "from": "T13n0413_001:0791b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是佛般涅槃，　　常恒淨無垢；",
        "from": "T13n0413_001:0791b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚夫二分別，　　無二瑜伽句。",
        "from": "T13n0413_001:0791b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種難行施，　　以戒攝有情；",
        "from": "T13n0413_001:0791b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切損忍辱，　　界增此為三。",
        "from": "T13n0413_001:0791b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸法精進，　　靜慮心加行；",
        "from": "T13n0413_001:0791b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常習於智慧，　　復得菩提增。",
        "from": "T13n0413_001:0791b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便共為慧，　　以願皆清淨；",
        "from": "T13n0413_001:0791b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以力妙堅智，　　界增為四種。",
        "from": "T13n0413_001:0791b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應禮菩薩，　　此為甚惡說；",
        "from": "T13n0413_001:0791b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不親於菩薩，　　不生其法身。",
        "from": "T13n0413_001:0791b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增於甘蔗種，　　欲食於石蜜；",
        "from": "T13n0413_001:0791b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若壞甘蔗種，　　無由石蜜生。",
        "from": "T13n0413_001:0791b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若護甘蔗種，　　三種而可得：",
        "from": "T13n0413_001:0791b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "糖、半糖、石蜜，　　於中必得生。",
        "from": "T13n0413_001:0791b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若護菩提心，　　三種而可得：",
        "from": "T13n0413_001:0791b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅漢、緣覺、佛，　　於中必得生。",
        "from": "T13n0413_001:0791b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如護於稻芽，　　農夫必當護；",
        "from": "T13n0413_001:0791b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如初勝解行，　　如來必作護。",
        "from": "T13n0413_001:0791b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如白十五日，　　而見月輪形；",
        "from": "T13n0413_001:0791b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是勝解行，　　影現佛形相。",
        "from": "T13n0413_001:0791b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是初月輪，　　剎那剎那增；",
        "from": "T13n0413_001:0791b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是入地者，　　念念見增益。",
        "from": "T13n0413_001:0791b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如白十五日，　　月輪得圓滿；",
        "from": "T13n0413_001:0791b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是究竟地，　　法身而得生。",
        "from": "T13n0413_001:0791b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝解彼堅固，　　常當於佛法；",
        "from": "T13n0413_001:0791b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能發如是心，　　得為不退轉。",
        "from": "T13n0413_001:0791b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染依得轉依，　　得受為淨依；",
        "from": "T13n0413_001:0791b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由分得覺悟，　　名為極喜地。",
        "from": "T13n0413_001:0791c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常時於染污，　　欲等種種垢；",
        "from": "T13n0413_001:0791c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無垢得清淨，　　名為離垢地。",
        "from": "T13n0413_001:0791c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅壞煩惱網，　　照耀得離垢；",
        "from": "T13n0413_001:0791c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量之暗瞑，　　離名發光地。",
        "from": "T13n0413_001:0791c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨常光明，　　遠離世吉祥；",
        "from": "T13n0413_001:0791c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圍遶智慧焰，　　名為焰慧地。",
        "from": "T13n0413_001:0791c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切明工技，　　種種靜慮飾；",
        "from": "T13n0413_001:0791c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難勝於煩惱，　　得勝難勝地。",
        "from": "T13n0413_001:0791c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三種菩提，　　攝受令成就；",
        "from": "T13n0413_001:0791c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅於甚深，　　名為現前地。",
        "from": "T13n0413_001:0791c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊戲於光網，　　遍以帝釋嚴；",
        "from": "T13n0413_001:0791c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超越欲暴流，　　名為遠行地。",
        "from": "T13n0413_001:0791c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛加持，　　預入於智海；",
        "from": "T13n0413_001:0791c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在無功用，　　不動於魔使。",
        "from": "T13n0413_001:0791c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸無礙解，　　瑜伽到彼岸；",
        "from": "T13n0413_001:0791c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於說法談論，　　名為善慧地。",
        "from": "T13n0413_001:0791c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身以智所成，　　如虛空無垢；",
        "from": "T13n0413_001:0791c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛皆所持，　　普遍如法雲。",
        "from": "T13n0413_001:0791c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法之所依，　　行果皆所持；",
        "from": "T13n0413_001:0791c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所依皆得轉，　　故名為法身。",
        "from": "T13n0413_001:0791c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離不思議熏，　　及離流轉習，",
        "from": "T13n0413_001:0791c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝思思者，　　云何而得知？",
        "from": "T13n0413_001:0791c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超過諸語境，　　一切根非境；",
        "from": "T13n0413_001:0791c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意識所取者，　　如所有我體。",
        "from": "T13n0413_001:0791c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第而積集，　　佛子大名稱；",
        "from": "T13n0413_001:0791c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以法雲智，　　微細見法性。",
        "from": "T13n0413_001:0791c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時洗濯心，　　超渡生死海；",
        "from": "T13n0413_001:0791c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼以大蓮花，　　安立為大座。",
        "from": "T13n0413_001:0791c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量寶葉光，　　寶光明為臺；",
        "from": "T13n0413_001:0792a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量億蓮花，　　普遍為眷屬。",
        "from": "T13n0413_001:0792a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以十種力，　　以無畏四種，",
        "from": "T13n0413_001:0792a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘佛不共法，　　大自在而坐。",
        "from": "T13n0413_001:0792a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切善皆集，　　福智以資糧；",
        "from": "T13n0413_001:0792a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓月在星宿，　　遍滿而圍遶。",
        "from": "T13n0413_001:0792a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則以佛日手，　　以寶光無垢；",
        "from": "T13n0413_001:0792a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌頂於長子，　　普遍皆令灌。",
        "from": "T13n0413_001:0792a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼住大瑜伽，　　皆見以天眼；",
        "from": "T13n0413_001:0792a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明攪擾世，　　惡習苦怖畏。",
        "from": "T13n0413_001:0792a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀如金光色，　　從彼瑜伽光；",
        "from": "T13n0413_001:0792a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼無知所覆，　　得開無明門。",
        "from": "T13n0413_001:0792a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以福智感招，　　彼獲無執定；",
        "from": "T13n0413_001:0792a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣而圓寂，　　心得皆變化。",
        "from": "T13n0413_001:0792a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法無自性，　　自性於境界；",
        "from": "T13n0413_001:0792a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩王妙見，　　法身妙無垢。",
        "from": "T13n0413_001:0792a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以無垢身，　　安住於智海；",
        "from": "T13n0413_001:0792a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即作眾生利，　　如巧摩尼珠。",
        "from": "T13n0413_001:0792a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切瑜伽者，　　大瑜伽自在；",
        "from": "T13n0413_001:0792a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛影皆變化，　　遍滿而流出。",
        "from": "T13n0413_001:0792a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有八臂者，　　三目熾盛身；",
        "from": "T13n0413_001:0792a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼皆瑜伽王，　　普遍而流出。",
        "from": "T13n0413_001:0792a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以慈悲手，　　勝喜執持弓；",
        "from": "T13n0413_001:0792a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "射以般若箭，　　皆斷細無明。",
        "from": "T13n0413_001:0792a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大力昇進，　　執持智慧棒；",
        "from": "T13n0413_001:0792a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切無明㲉，　　普遍皆碎壞。",
        "from": "T13n0413_001:0792a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強力諸有情，　　金剛熾盛身；",
        "from": "T13n0413_001:0792a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏有情故，　　則為金剛手。",
        "from": "T13n0413_001:0792a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自為作業者，　　示現種種果；",
        "from": "T13n0413_001:0792a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教誡如教理，　　變為平等王。",
        "from": "T13n0413_001:0792b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢渴猛熾身，　　能施諸飲食；",
        "from": "T13n0413_001:0792b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常患諸疾者，　　則為善醫王。",
        "from": "T13n0413_001:0792b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔王於營從，　　魔女於莊嚴；",
        "from": "T13n0413_001:0792b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩作親友，　　能施菩提場。",
        "from": "T13n0413_001:0792b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如日月形，　　彼光皆悅意；",
        "from": "T13n0413_001:0792b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出如電光，　　照曜俱胝剎。",
        "from": "T13n0413_001:0792b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由以一燈故，　　遍照皆得然；",
        "from": "T13n0413_001:0792b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一燈滅盡，　　一切皆隨盡。",
        "from": "T13n0413_001:0792b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是異熟佛，　　示現種種光；",
        "from": "T13n0413_001:0792b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一化現涅槃，　　餘佛示歸寂。",
        "from": "T13n0413_001:0792b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一亦無滅度，　　日光豈作暗？",
        "from": "T13n0413_001:0792b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常現於出沒，　　示現剎土海。",
        "from": "T13n0413_001:0792b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無智暗世，　　能淨智慧眼；",
        "from": "T13n0413_001:0792b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往於俱胝剎，　　矜愍化有情。",
        "from": "T13n0413_001:0792b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼皆不疲倦，　　由彼大慈甲；",
        "from": "T13n0413_001:0792b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切於神足，　　瑜伽皆彼岸。",
        "from": "T13n0413_001:0792b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆觀時、非時，　　令彼得流轉；",
        "from": "T13n0413_001:0792b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剛強於諂曲，　　暫時而棄捨。",
        "from": "T13n0413_001:0792b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量調有情，　　頓作令清淨；",
        "from": "T13n0413_001:0792b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量佛變化，　　頓時得暫變。",
        "from": "T13n0413_001:0792b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三界海中，　　而擲調伏網；",
        "from": "T13n0413_001:0792b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒展妙法網，　　普遍令成熟。",
        "from": "T13n0413_001:0792b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則以調伏網，　　普遍令成熟；",
        "from": "T13n0413_001:0792b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍令舉出，　　於中漂流者。",
        "from": "T13n0413_001:0792b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則如千有情，　　普遍令度已；",
        "from": "T13n0413_001:0792b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度已令覺悟，　　妙法不生疑。",
        "from": "T13n0413_001:0792b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊妙法鈴，　　普遍令得聞；",
        "from": "T13n0413_001:0792b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此振聲故，　　除落煩惱塵。",
        "from": "T13n0413_001:0792b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增上無明人，　　令淨於一時；",
        "from": "T13n0413_001:0792b30_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以日光明威，　　破壞眾翳瞙。",
        "from": "T13n0413_001:0792c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨從暗煩惱，　　及餘罪身者；",
        "from": "T13n0413_001:0792c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼作利益，　　積漸令清淨。",
        "from": "T13n0413_001:0792c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼彼人現化，　　安住如水月，",
        "from": "T13n0413_001:0792c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱攪擾心，　　不見於如來，",
        "from": "T13n0413_001:0792c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如餓鬼於海，　　普遍見枯竭，",
        "from": "T13n0413_001:0792c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是少福者，　　無佛作分別。",
        "from": "T13n0413_001:0792c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情少福者，　　如來云何作？",
        "from": "T13n0413_001:0792c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如於生盲手，　　安以最勝寶。",
        "from": "T13n0413_001:0792c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何而能見，　　無上之法身？",
        "from": "T13n0413_001:0792c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱胝日光身，　　光網以圍遶。",
        "from": "T13n0413_001:0792c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天以少善，　　不能而得見；",
        "from": "T13n0413_001:0792c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上次於大天，　　云何而得見？",
        "from": "T13n0413_001:0792c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼色不能見，　　諸仙離煩惱；",
        "from": "T13n0413_001:0792c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天、修羅、梵等，　　云何餘少慧？",
        "from": "T13n0413_001:0792c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然以佛威力，　　清淨自心故；",
        "from": "T13n0413_001:0792c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能見如是類，　　獲得一切盛。",
        "from": "T13n0413_001:0792c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情福端嚴，　　佛住彼人前；",
        "from": "T13n0413_001:0792c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明照耀身，　　三十二勝相。",
        "from": "T13n0413_001:0792c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼如是丈夫，　　當見如大海；",
        "from": "T13n0413_001:0792c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不經於多時，　　即得智如海。",
        "from": "T13n0413_001:0792c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊彼色身，　　安住於多劫；",
        "from": "T13n0413_001:0792c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能調可調利，　　趣於戒種類。",
        "from": "T13n0413_001:0792c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣壽大瑜伽，　　少壽何因故？",
        "from": "T13n0413_001:0792c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多人俱胝餘，　　示現增減壽。",
        "from": "T13n0413_001:0792c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量俱胝劫，　　以命命增長；",
        "from": "T13n0413_001:0792c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣皆無盡，　　獲得無盡果。",
        "from": "T13n0413_001:0792c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有相應顯此理，　　唯身以慧作分析；",
        "from": "T13n0413_001:0792c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人生於淨蓮花，　　聞法所說無量壽。",
        "from": "T13n0413_001:0792c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千誦大集經地藏菩薩請問法身讚",
        "from": "T13n0413_001:0792c30_100",
        "context_with_next_sentence": false
    }
]