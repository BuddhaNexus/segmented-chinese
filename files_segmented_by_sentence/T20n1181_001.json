[
    {
        "source_sentence": "大方廣菩薩藏經中文殊師利根",
        "from": "T20n1181_001:0780a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本一字陀羅尼經",
        "from": "T20n1181_001:0780a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐北印度迦濕彌羅國",
        "from": "T20n1181_001:0780a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏寶思惟譯如是我聞。",
        "from": "T20n1181_001:0780a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛住淨居天寶莊嚴道場中。",
        "from": "T20n1181_001:0780a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩及淨居諸天眾俱。",
        "from": "T20n1181_001:0780a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大慈大悲。",
        "from": "T20n1181_001:0780a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此會中普告一切諸天眾言。",
        "from": "T20n1181_001:0780a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等善聽文殊師利童子行輪呪法。",
        "from": "T20n1181_001:0780a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲守護諸眾生故。",
        "from": "T20n1181_001:0780a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來所有祕密心大神呪王。",
        "from": "T20n1181_001:0780a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當為汝等開示顯說。",
        "from": "T20n1181_001:0780a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有誦者。",
        "from": "T20n1181_001:0780a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我記此人則為已持一切諸呪悉皆圓滿。",
        "from": "T20n1181_001:0780a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所作皆得成就。",
        "from": "T20n1181_001:0780a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無過者。",
        "from": "T20n1181_001:0780a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等應知此陀羅尼。",
        "from": "T20n1181_001:0780a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸呪中是大神呪王有大神力。",
        "from": "T20n1181_001:0780a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人能受持者。",
        "from": "T20n1181_001:0780a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利童子菩薩常來擁護。",
        "from": "T20n1181_001:0780a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於覺時或於夢中。",
        "from": "T20n1181_001:0780a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為現身相及諸善事。",
        "from": "T20n1181_001:0780a29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令此人生大歡喜。",
        "from": "T20n1181_001:0780b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善男子此之呪王尚能攝得文殊師利童子菩薩。",
        "from": "T20n1181_001:0780b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況餘菩薩及世出世賢聖等眾。",
        "from": "T20n1181_001:0780b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子。",
        "from": "T20n1181_001:0780b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此呪能消一切災障一切惡夢。",
        "from": "T20n1181_001:0780b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切怨敵一切五逆四重十惡罪業。",
        "from": "T20n1181_001:0780b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡邪不祥呪法。",
        "from": "T20n1181_001:0780b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能成辦一切善事具大精進。",
        "from": "T20n1181_001:0780b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是呪於世出世種種呪中為最殊勝。",
        "from": "T20n1181_001:0780b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸佛心能令一切所願皆悉滿足。",
        "from": "T20n1181_001:0780b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以五色綖。",
        "from": "T20n1181_001:0780b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結呪索繫其項上。",
        "from": "T20n1181_001:0780b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護其身亦令諸願。",
        "from": "T20n1181_001:0780b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得圓滿無超過者。",
        "from": "T20n1181_001:0780b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1181_001:0780b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵齒𡄦二合𡄦字離禁反諸佛子等此呪能滅一切惡邪魍魎。",
        "from": "T20n1181_001:0780b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸鬼是一切諸佛吉祥之法。",
        "from": "T20n1181_001:0780b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能成就一切神呪。",
        "from": "T20n1181_001:0780b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪者。",
        "from": "T20n1181_001:0780b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生起大慈心。",
        "from": "T20n1181_001:0780b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生起大悲心。",
        "from": "T20n1181_001:0780b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切障礙皆得消滅。",
        "from": "T20n1181_001:0780b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有諸願皆得滿足。",
        "from": "T20n1181_001:0780b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未作法時。",
        "from": "T20n1181_001:0780b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能成辦如意之事。",
        "from": "T20n1181_001:0780b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若發無上大菩提心。",
        "from": "T20n1181_001:0780b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦之一遍力能守護自身。",
        "from": "T20n1181_001:0780b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦兩遍力能守護同伴。",
        "from": "T20n1181_001:0780b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦三遍力能守護一宅中人。",
        "from": "T20n1181_001:0780b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦四遍力能守護一城中人。",
        "from": "T20n1181_001:0780b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦五遍力能守護一國中人。",
        "from": "T20n1181_001:0780b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦六遍力能守護一天下人。",
        "from": "T20n1181_001:0780b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦七遍力能守護四天下人。",
        "from": "T20n1181_001:0780b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以清旦誦一遍。",
        "from": "T20n1181_001:0780b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪水洗面能令見者歡喜。",
        "from": "T20n1181_001:0780b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪香熏衣亦令見者歡喜。",
        "from": "T20n1181_001:0780b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若患齒痛。",
        "from": "T20n1181_001:0780b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪揩齒木嚼之。",
        "from": "T20n1181_001:0780b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揩齒所痛即差。",
        "from": "T20n1181_001:0780b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有女人產難之時。",
        "from": "T20n1181_001:0780b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取阿吒盧沙迦根或郎伽利迦根。",
        "from": "T20n1181_001:0780b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪之七遍。",
        "from": "T20n1181_001:0780b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無虫水和摩之。",
        "from": "T20n1181_001:0780b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗於產女臍中兒即易生。",
        "from": "T20n1181_001:0780b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或諸男子為箭所中。",
        "from": "T20n1181_001:0780b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鏃入筋骨拔之不出。",
        "from": "T20n1181_001:0780b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以十年酥三兩呪一百八遍。",
        "from": "T20n1181_001:0780b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安瘡中及食之。",
        "from": "T20n1181_001:0780b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "箭鏃即出。",
        "from": "T20n1181_001:0780b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若婦人五年乃至二十三十年不生男女者。",
        "from": "T20n1181_001:0780c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或自有病。",
        "from": "T20n1181_001:0780c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或男子有病。",
        "from": "T20n1181_001:0780c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼魅所著種種病等。",
        "from": "T20n1181_001:0780c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為毒藥所中。",
        "from": "T20n1181_001:0780c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以十年已上酥五兩。",
        "from": "T20n1181_001:0780c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔雀羽一兩內於酥中呪之二十一遍。",
        "from": "T20n1181_001:0780c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煎之擣為末。",
        "from": "T20n1181_001:0780c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以石蜜一兩大呵梨勒三顆。",
        "from": "T20n1181_001:0780c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去核取皮相和。",
        "from": "T20n1181_001:0780c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪之一百八遍。",
        "from": "T20n1181_001:0780c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以清旦空腹盡服之。",
        "from": "T20n1181_001:0780c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於七日中即有男女。",
        "from": "T20n1181_001:0780c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若患頭痛以烏翅羽呪之七遍。",
        "from": "T20n1181_001:0780c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拂痛人頭患即除愈。",
        "from": "T20n1181_001:0780c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若患瘧病一日二日乃至七日。",
        "from": "T20n1181_001:0780c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或常患者。",
        "from": "T20n1181_001:0780c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以純乳煮粥。",
        "from": "T20n1181_001:0780c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著好酥一兩呪之一百八遍。",
        "from": "T20n1181_001:0780c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與病人服之即得除愈。",
        "from": "T20n1181_001:0780c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善男子以要言之。",
        "from": "T20n1181_001:0780c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲合和一切湯藥及欲服者。",
        "from": "T20n1181_001:0780c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須至心誦之二十一遍速得如願。",
        "from": "T20n1181_001:0780c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子若有一切眾生。",
        "from": "T20n1181_001:0780c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為飛頭鬼所執。",
        "from": "T20n1181_001:0780c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手自摩其面。",
        "from": "T20n1181_001:0780c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪一百八遍作可畏相貌。",
        "from": "T20n1181_001:0780c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便以左手作本生印。",
        "from": "T20n1181_001:0780c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大母指屈在掌中。",
        "from": "T20n1181_001:0780c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用後四指押大母指上。",
        "from": "T20n1181_001:0780c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急把拳。",
        "from": "T20n1181_001:0780c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即自努目陰誦此呪。",
        "from": "T20n1181_001:0780c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而看病者所患即除。",
        "from": "T20n1181_001:0780c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人患一切鬼病。",
        "from": "T20n1181_001:0780c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以呪呪右手一百八遍。",
        "from": "T20n1181_001:0780c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安息香熏之。",
        "from": "T20n1181_001:0780c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手作本生印。",
        "from": "T20n1181_001:0780c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手磨病人頭患即除愈。",
        "from": "T20n1181_001:0780c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有怨敵及諸惡夢。",
        "from": "T20n1181_001:0780c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種怖畏身心不安。",
        "from": "T20n1181_001:0780c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以七色綖結呪索作蓮花形。",
        "from": "T20n1181_001:0780c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作輪形或作金剛杵形。",
        "from": "T20n1181_001:0780c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪之一百八遍。",
        "from": "T20n1181_001:0780c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安息香熏之。",
        "from": "T20n1181_001:0780c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於七日中繫自身項上。",
        "from": "T20n1181_001:0780c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切厄難悉皆消散。",
        "from": "T20n1181_001:0780c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以牛黃研之為墨。",
        "from": "T20n1181_001:0780c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於淨紙上或帛練上。",
        "from": "T20n1181_001:0780c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫作所怖者形。",
        "from": "T20n1181_001:0780c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其四邊作齒𡄦字圍之。",
        "from": "T20n1181_001:0780c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作蓮花或作輪字。",
        "from": "T20n1181_001:0780c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作卍字螺魚金剛鉤寶瓶等圍之。",
        "from": "T20n1181_001:0781a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪之七遍所怖即除。",
        "from": "T20n1181_001:0781a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善男子若欲經過師子虎狼毒蛇怨賊一切險難之處。",
        "from": "T20n1181_001:0781a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須淨其身心。",
        "from": "T20n1181_001:0781a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得近諸女人及喫一切五辛酒肉芸薹胡荽。",
        "from": "T20n1181_001:0781a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸眾生起大悲想。",
        "from": "T20n1181_001:0781a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心誦呪呪之四十九遍。",
        "from": "T20n1181_001:0781a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而諸怨惡自然退散。",
        "from": "T20n1181_001:0781a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱令遇之無不歡喜。",
        "from": "T20n1181_001:0781a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善男子此呪縱令一切眾生。",
        "from": "T20n1181_001:0781a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於一劫或無量劫。",
        "from": "T20n1181_001:0781a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至名字不可得聞。",
        "from": "T20n1181_001:0781a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況得見。",
        "from": "T20n1181_001:0781a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專心念誦假令七寶象馬滿閻浮提。",
        "from": "T20n1181_001:0781a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶是世間滅壞之法。",
        "from": "T20n1181_001:0781a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼呪。",
        "from": "T20n1181_001:0781a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生現世當來常獲安隱。",
        "from": "T20n1181_001:0781a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸如來大菩薩眾常為眷屬。",
        "from": "T20n1181_001:0781a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為自身若為他身。",
        "from": "T20n1181_001:0781a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所願皆得。",
        "from": "T20n1181_001:0781a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故慇懃生難遇想。",
        "from": "T20n1181_001:0781a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿得輕慢起疑惑心。",
        "from": "T20n1181_001:0781a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣菩薩藏經中文殊師利根本一字陀羅尼經",
        "from": "T20n1181_001:0781a15_100",
        "context_with_next_sentence": false
    }
]