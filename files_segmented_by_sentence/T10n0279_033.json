[
    {
        "source_sentence": "大方廣佛華嚴經卷第三十三",
        "from": "T10n0279_033:0174c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于闐國三藏實叉難陀奉　制譯",
        "from": "T10n0279_033:0174c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "之十一十迴向品第二十五之十一",
        "from": "T10n0279_033:0174c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛子！",
        "from": "T10n0279_033:0174c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩復以法施所修善根如是迴向：",
        "from": "T10n0279_033:0174c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『願一切佛剎皆悉清淨，以不可說不可說莊嚴具而莊嚴之。",
        "from": "T10n0279_033:0174c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一佛剎，其量廣大，同於法界，純善無礙，清淨光明，諸佛於中現成正覺。",
        "from": "T10n0279_033:0174c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一佛剎中清淨境界，悉能顯現一切佛剎；",
        "from": "T10n0279_033:0174c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如一佛剎，一切佛剎亦復如是。",
        "from": "T10n0279_033:0174c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一一剎，悉以等法界無量無邊清淨妙寶莊嚴之具而為嚴飾。",
        "from": "T10n0279_033:0174c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂：",
        "from": "T10n0279_033:0174c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇清淨寶座，敷眾寶衣；",
        "from": "T10n0279_033:0174c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶帳，寶網垂布；",
        "from": "T10n0279_033:0174c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶蓋，一切妙寶互相映徹；",
        "from": "T10n0279_033:0174c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶雲，普雨眾寶；",
        "from": "T10n0279_033:0174c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶華，周遍清淨；",
        "from": "T10n0279_033:0174c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇眾寶所成欄、楯、軒、檻，清淨莊嚴；",
        "from": "T10n0279_033:0174c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶鈴，常演諸佛微妙音聲，周流法界；",
        "from": "T10n0279_033:0174c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶蓮華，種種寶色開敷榮耀；",
        "from": "T10n0279_033:0174c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶樹，周匝行列，無量妙寶以為華果；",
        "from": "T10n0279_033:0174c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶宮殿，無量菩薩止住其中，阿僧祇寶樓閣，廣博崇麗，延袤遠近；",
        "from": "T10n0279_033:0174c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶却敵，大寶所成，莊嚴妙好；",
        "from": "T10n0279_033:0174c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶門闥，妙寶瓔珞周匝垂布；",
        "from": "T10n0279_033:0174c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶窓牖，不思議寶清淨莊嚴；",
        "from": "T10n0279_033:0174c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶多羅，形如半月，眾寶集成。",
        "from": "T10n0279_033:0174c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切，悉以眾寶而為嚴飾，離垢清淨，不可思議，無非如來善根所起，具足無數寶藏莊嚴。",
        "from": "T10n0279_033:0174c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有阿僧祇寶河，流出一切清淨善法；",
        "from": "T10n0279_033:0174c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶海，法水盈滿；",
        "from": "T10n0279_033:0174c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶芬陀利華，常出妙法芬陀利聲；",
        "from": "T10n0279_033:0174c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶須彌山，智慧山王秀出清淨；",
        "from": "T10n0279_033:0175a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇八楞妙寶，寶線貫穿，嚴淨無比；",
        "from": "T10n0279_033:0175a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇淨光寶，常放無礙大智光明，普照法界；",
        "from": "T10n0279_033:0175a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶鈴鐸，更相扣擊，出妙音聲；",
        "from": "T10n0279_033:0175a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇清淨寶，諸菩薩寶具足充滿；",
        "from": "T10n0279_033:0175a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶繒綵，處處垂下，色相光潔；",
        "from": "T10n0279_033:0175a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇妙寶幢，以寶半月而為嚴飾；",
        "from": "T10n0279_033:0175a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶幡，悉能普雨無量寶幡；",
        "from": "T10n0279_033:0175a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶帶，垂布空中，莊嚴殊妙；",
        "from": "T10n0279_033:0175a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶敷具，能生種種微細樂觸；",
        "from": "T10n0279_033:0175a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇妙寶旋，示現菩薩一切智眼；",
        "from": "T10n0279_033:0175a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶瓔珞，一一瓔珞百千菩薩上妙莊嚴；",
        "from": "T10n0279_033:0175a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶宮殿，超過一切妙絕無比；",
        "from": "T10n0279_033:0175a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶莊嚴具，金剛摩尼以為嚴飾；",
        "from": "T10n0279_033:0175a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇種種妙寶莊嚴具，常現一切清淨妙色；",
        "from": "T10n0279_033:0175a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇清淨寶，殊形異彩，光鑒映徹；",
        "from": "T10n0279_033:0175a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶山，以為垣牆，周匝圍遶，清淨無礙；",
        "from": "T10n0279_033:0175a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶香，其香普熏一切世界；",
        "from": "T10n0279_033:0175a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶化事，一一化事周遍法界；",
        "from": "T10n0279_033:0175a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶光明，一一光明現一切光。",
        "from": "T10n0279_033:0175a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有阿僧祇寶光明，清淨智光照了諸法。",
        "from": "T10n0279_033:0175a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有阿僧祇無礙寶光明，一一光明周遍法界。",
        "from": "T10n0279_033:0175a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有阿僧祇寶處，一切諸寶皆悉具足。",
        "from": "T10n0279_033:0175a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶藏，開示一切正法藏寶。",
        "from": "T10n0279_033:0175a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶幢，如來幢相迥然高出。",
        "from": "T10n0279_033:0175a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶賢，大智賢像，具足清淨。",
        "from": "T10n0279_033:0175a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶園，生諸菩薩三昧快樂。",
        "from": "T10n0279_033:0175a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶音，如來妙音，普示世間。",
        "from": "T10n0279_033:0175a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶形，其一一形皆放無量妙法光明。",
        "from": "T10n0279_033:0175a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶相，其一一相悉超眾相。",
        "from": "T10n0279_033:0175a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶威儀，見者皆生菩薩喜樂。",
        "from": "T10n0279_033:0175a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶聚，見者皆生智慧寶聚。",
        "from": "T10n0279_033:0175a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶安住，見者皆生善住寶心。",
        "from": "T10n0279_033:0175a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶衣服，其有著者，生諸菩薩無比三昧。",
        "from": "T10n0279_033:0175a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶袈裟，其有著者，纔始發心則得善見陀羅尼門。",
        "from": "T10n0279_033:0175b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶修習，其有見者，知一切寶皆是業果，決定清淨。",
        "from": "T10n0279_033:0175b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶無礙知見，其有見者，得了一切清淨法眼。",
        "from": "T10n0279_033:0175b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶光藏，其有見者，則得成就大智慧藏。",
        "from": "T10n0279_033:0175b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶座，佛坐其上大師子吼。",
        "from": "T10n0279_033:0175b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶燈，常放清淨智慧光明。",
        "from": "T10n0279_033:0175b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶多羅樹，次第行列，繚以寶繩，莊嚴清淨。",
        "from": "T10n0279_033:0175b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其樹復有阿僧祇寶幹，從身聳擢，端直圓潔；",
        "from": "T10n0279_033:0175b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶枝，種種眾寶莊嚴稠密，不思議鳥翔集其中，常吐妙音宣揚正法；",
        "from": "T10n0279_033:0175b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶葉，放大智光，遍一切處；",
        "from": "T10n0279_033:0175b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶華，一一華上，無量菩薩結跏趺坐遍遊法界；",
        "from": "T10n0279_033:0175b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶果，見者當得一切智智不退轉果。",
        "from": "T10n0279_033:0175b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶聚落，見者捨離世聚落法。",
        "from": "T10n0279_033:0175b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶都邑，無礙眾生於中盈滿。",
        "from": "T10n0279_033:0175b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶宮殿，王處其中，具足菩薩那羅延身，勇猛堅固，被法甲冑，心無退轉。",
        "from": "T10n0279_033:0175b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶舍，入者能除戀舍宅心。",
        "from": "T10n0279_033:0175b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶衣，著者能令解了無著。",
        "from": "T10n0279_033:0175b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶宮殿，出家菩薩充滿其中。",
        "from": "T10n0279_033:0175b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶珍玩，見者咸生無量歡喜。",
        "from": "T10n0279_033:0175b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶輪，放不思議智慧光明轉不退輪。",
        "from": "T10n0279_033:0175b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶跋陀樹，因陀羅網莊嚴清淨。",
        "from": "T10n0279_033:0175b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶地，不思議寶間錯莊嚴。",
        "from": "T10n0279_033:0175b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶吹，其音清亮充滿法界。",
        "from": "T10n0279_033:0175b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶鼓，妙音克諧，窮劫不絕。",
        "from": "T10n0279_033:0175b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶眾生，盡能攝持無上法寶。",
        "from": "T10n0279_033:0175b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶身，具足無量功德妙寶。",
        "from": "T10n0279_033:0175b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶口，常演一切妙法寶音。",
        "from": "T10n0279_033:0175b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶心，具清淨意大智願寶。",
        "from": "T10n0279_033:0175b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶念，斷諸愚惑，究竟堅固一切智寶。",
        "from": "T10n0279_033:0175b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶明，誦持一切諸佛法寶。",
        "from": "T10n0279_033:0175b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶慧，決了一切諸佛法藏。",
        "from": "T10n0279_033:0175c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶智，得大圓滿一切智寶。",
        "from": "T10n0279_033:0175c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶眼，鑒十力寶，無所障礙。",
        "from": "T10n0279_033:0175c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶耳，聽聞無量，盡法界聲，清淨無礙。",
        "from": "T10n0279_033:0175c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶鼻，常嗅隨順清淨寶香。",
        "from": "T10n0279_033:0175c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶舌，能說無量諸語言法。",
        "from": "T10n0279_033:0175c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶身，遍遊十方而無罣礙。",
        "from": "T10n0279_033:0175c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶意，常勤修習普賢行願。",
        "from": "T10n0279_033:0175c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶音，淨妙音聲遍十方界。",
        "from": "T10n0279_033:0175c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶身業，一切所作以智為首。",
        "from": "T10n0279_033:0175c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶語業，常說修行無礙智寶。",
        "from": "T10n0279_033:0175c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶意業，得無障礙廣大智寶，究竟圓滿。",
        "from": "T10n0279_033:0175c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「佛子！",
        "from": "T10n0279_033:0175c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩於彼一切諸佛剎中，於一佛剎、一方、一處、一毛端量，有無量無邊不可說數諸大菩薩，皆悉成就清淨智慧，充滿而住。",
        "from": "T10n0279_033:0175c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如一佛剎、一方、一處、一毛端量，如是盡虛空遍法界一一佛剎、一一方、一一處、一一毛端量，悉亦如是。",
        "from": "T10n0279_033:0175c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為菩薩摩訶薩以諸善根而為迴向，普願一切諸佛國土悉具種種妙寶莊嚴。",
        "from": "T10n0279_033:0175c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如寶莊嚴，如是廣說；",
        "from": "T10n0279_033:0175c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是香莊嚴、華莊嚴、鬘莊嚴、塗香莊嚴、燒香莊嚴、末香莊嚴、衣莊嚴、蓋莊嚴、幢莊嚴、幡莊嚴、摩尼寶莊嚴，次第乃至過此百倍皆如寶莊嚴，如是廣說。",
        "from": "T10n0279_033:0175c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛子！",
        "from": "T10n0279_033:0175c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩以法施等所集善根，為長養一切善根故迴向；",
        "from": "T10n0279_033:0175c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為嚴淨一切佛剎故迴向；",
        "from": "T10n0279_033:0175c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成就一切眾生故迴向；",
        "from": "T10n0279_033:0175c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆心淨不動故迴向；",
        "from": "T10n0279_033:0175c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆入甚深佛法故迴向；",
        "from": "T10n0279_033:0175c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得無能過清淨功德故迴向；",
        "from": "T10n0279_033:0175c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得不可壞清淨福力故迴向；",
        "from": "T10n0279_033:0175c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得無盡智力，度諸眾生令入佛法故迴向；",
        "from": "T10n0279_033:0175c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得平等無量清淨言音故迴向；",
        "from": "T10n0279_033:0176a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得平等無礙眼，成就盡虛空遍法界等智慧故迴向；",
        "from": "T10n0279_033:0176a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得清淨念，知前際劫一切世界故迴向；",
        "from": "T10n0279_033:0176a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得無礙大智慧，悉能決了一切法藏故迴向；",
        "from": "T10n0279_033:0176a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得無限量大菩提，周遍法界無所障礙故迴向；",
        "from": "T10n0279_033:0176a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得平等無分別同體善根故迴向；",
        "from": "T10n0279_033:0176a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得一切功德具足莊嚴清淨身、語、意業故迴向；",
        "from": "T10n0279_033:0176a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得同於普賢行故迴向；",
        "from": "T10n0279_033:0176a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得入一切同體清淨佛剎故迴向；",
        "from": "T10n0279_033:0176a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生悉觀察一切智，皆趣入圓滿故迴向；",
        "from": "T10n0279_033:0176a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得遠離不平等善根故迴向；",
        "from": "T10n0279_033:0176a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得平等無異相，深心次第圓滿一切智故迴向；",
        "from": "T10n0279_033:0176a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆得安住一切白法故迴向；",
        "from": "T10n0279_033:0176a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆於一念中證一切智得究竟故迴向；",
        "from": "T10n0279_033:0176a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生皆成滿清淨一切智道故迴向。",
        "from": "T10n0279_033:0176a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛子！",
        "from": "T10n0279_033:0176a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩以諸善根普為一切眾生如是迴向已，復以此善根，欲普圓滿演說一切清淨行法力故迴向；",
        "from": "T10n0279_033:0176a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲成就清淨行威力，得不可說不可說法海故迴向；",
        "from": "T10n0279_033:0176a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲於一一法海，具足無量等法界清淨智光明故迴向；",
        "from": "T10n0279_033:0176a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲開示演說一切法差別句義故迴向；",
        "from": "T10n0279_033:0176a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲成就無邊廣大一切法光明三昧故迴向；",
        "from": "T10n0279_033:0176a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲隨順三世諸佛辯才故迴向；",
        "from": "T10n0279_033:0176a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲成就去、來、現在一切佛自在身故迴向；",
        "from": "T10n0279_033:0176a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為尊重一切佛可愛樂無障礙法故迴向；",
        "from": "T10n0279_033:0176a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為滿足大悲心，救護一切眾生常無退轉故迴向；",
        "from": "T10n0279_033:0176a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲成就不思議差別法、無障礙智，心無垢染，諸根清淨，普入一切眾會道場故迴向；",
        "from": "T10n0279_033:0176b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲於一切若覆若仰、若麁若細、若廣若狹、小大染淨，如是等諸佛國土，常轉平等不退法輪故迴向；",
        "from": "T10n0279_033:0176b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲於念念中得無所畏、無有窮盡種種辯才妙法光明開示演說故迴向；",
        "from": "T10n0279_033:0176b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為樂求眾善，發心修習，諸根轉勝，獲一切法大神通智，盡能了知一切諸法故迴向；",
        "from": "T10n0279_033:0176b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲於一切眾會道場親近供養，為一切眾生演一切法咸令歡喜故迴向。",
        "from": "T10n0279_033:0176b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛子！",
        "from": "T10n0279_033:0176b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩又以此善根如是迴向，所謂：",
        "from": "T10n0279_033:0176b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『以住法界無量住迴向，以住法界無量身業迴向，以住法界無量語業迴向，以住法界無量意業迴向，以住法界無量色平等迴向，以住法界無量受、想、行、識平等迴向，以住法界無量蘊平等迴向，以住法界無量界平等迴向，以住法界無量處平等迴向，以住法界無量內平等迴向，以住法界無量外平等迴向，以住法界無量發起平等迴向，以住法界無量深心平等迴向，以住法界無量方便平等迴向，以住法界無量信解平等迴向，以住法界無量諸根平等迴向，以住法界無量初、中、後際平等迴向，以住法界無量業報平等迴向，以住法界無量染淨平等迴向，以住法界無量眾生平等迴向，以住法界無量佛剎平等迴向，以住法界無量法平等迴向，以住法界無量世間光明平等迴向，以住法界無量諸佛菩薩平等迴向，以住法界無量菩薩行願平等迴向，以住法界無量菩薩出離平等迴向，以住法界無量菩薩教化調伏平等迴向，以住法界無量法界無二平等迴向，以住法界無量如來眾會道場平等迴向。",
        "from": "T10n0279_033:0176c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「佛子！",
        "from": "T10n0279_033:0176c02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩如是迴向時，安住法界無量平等清淨身，安住法界無量平等清淨語，安住法界無量平等清淨心，安住法界無量平等諸菩薩清淨行願，安住法界無量平等清淨眾會道場，安住法界無量平等為一切菩薩廣說諸法清淨智，安住法界無量平等能入盡法界一切世界身，安住法界無量平等一切法光明清淨無畏；",
        "from": "T10n0279_033:0176c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以一音盡斷一切眾生疑網，隨其根欲皆令歡喜，住於無上一切種智、力、無所畏、自在神通、廣大功德、出離法中。",
        "from": "T10n0279_033:0176c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛子！",
        "from": "T10n0279_033:0176c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為菩薩摩訶薩第十住等法界無量迴向。",
        "from": "T10n0279_033:0176c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩以法施等一切善根如是迴向時，成滿普賢無量無邊菩薩行願，悉能嚴淨盡虛空等法界一切佛剎，令一切眾生亦得如是，具足成就無邊智慧，了一切法，於念念中見一切佛出興於世，於念念中見一切佛無量無邊自在力，所謂：",
        "from": "T10n0279_033:0176c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大自在力、無著自在力、無礙自在力、不思議自在力、淨一切眾生自在力、立一切世界自在力、現不可說語言自在力、隨時應現自在力、住不退轉神通智自在力、演說一切無邊法界𢔌無有餘自在力、出生普賢菩薩無邊際眼自在力、以無礙耳識聞持無量諸佛正法自在力、一身結跏趺坐周遍十方無量法界於諸眾生無所迫隘自在力、以圓滿智普入三世無量法自在力。",
        "from": "T10n0279_033:0176c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又得無量清淨，所謂：",
        "from": "T10n0279_033:0176c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生清淨、一切佛剎清淨、一切法清淨、一切處遍知智清淨、遍虛空界無邊智清淨、得一切差別言音智以種種言音普應眾生清淨、放無量圓滿光普照一切無邊世界清淨、出生一切三世菩薩行智清淨、一念中普入三世一切諸佛眾會道場智清淨、入無邊一切世間令一切眾生皆作所應作清淨。",
        "from": "T10n0279_033:0177a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等皆得具足，皆得成就，皆已修治，皆得平等，皆悉現前，皆悉知見，皆悉悟入，皆已觀察，皆得清淨，到於彼岸。",
        "from": "T10n0279_033:0177a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，佛神力故，十方各百萬佛剎微塵數世界六種震動，所謂：",
        "from": "T10n0279_033:0177a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動、遍動、等遍動，起、遍起、等遍起，涌、遍涌、等遍涌，震、遍震、等遍震，吼、遍吼、等遍吼，擊、遍擊、等遍擊。",
        "from": "T10n0279_033:0177a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛神力故，法如是故，雨眾天華、天鬘、天末香、天諸雜香、天衣服、天珍寶、天莊嚴具、天摩尼寶、天沈水香、天栴檀香、天上妙蓋、天種種幢、天雜色幡、阿僧祇諸天身；",
        "from": "T10n0279_033:0177a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量百千億不可說天妙法音、不可思議天讚佛音、阿僧祇天歡喜音，咸稱善哉；",
        "from": "T10n0279_033:0177a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量阿僧祇百千那由他諸天恭敬禮拜；",
        "from": "T10n0279_033:0177a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無數天子常念諸佛，希求如來無量功德，心不捨離；",
        "from": "T10n0279_033:0177a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無數天子作眾妓樂，歌詠讚歎供養如來；",
        "from": "T10n0279_033:0177a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千阿僧祇諸天放大光明，普照盡虛空遍法界一切佛剎，現無量阿僧祇諸佛境界；",
        "from": "T10n0279_033:0177a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來化身出過諸天，如於此世界兜率陀天宮說如是法，周遍十方一切世界兜率天宮悉亦如是。",
        "from": "T10n0279_033:0177a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時，復以佛神力故，十方各過百萬佛剎微塵數世界外，各有百萬佛剎微塵數諸菩薩而來集會，周遍十方，咸作是言：",
        "from": "T10n0279_033:0177a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善哉善哉！",
        "from": "T10n0279_033:0177a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子！",
        "from": "T10n0279_033:0177a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能說此諸大迴向。",
        "from": "T10n0279_033:0177a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子！",
        "from": "T10n0279_033:0177a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等皆同一號，名：",
        "from": "T10n0279_033:0177b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛幢，悉從金剛光世界金剛幢佛所來詣此土。",
        "from": "T10n0279_033:0177b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸世界悉以佛神力故而說是法，眾會眷屬、文辭句義，皆亦如是，不增不減。",
        "from": "T10n0279_033:0177b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等皆承佛神力，從彼土來為汝作證。",
        "from": "T10n0279_033:0177b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我來此眾會為汝作證，十方所有一切世界兜率天宮寶莊嚴殿諸菩薩眾來為作證，亦復如是。",
        "from": "T10n0279_033:0177b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，金剛幢菩薩承佛神力，觀察十方一切眾會暨于法界已，善知文義，增廣大心，大悲普覆一切眾生，繫心安住三世佛種，善入一切佛功德法，成就諸佛自在之身，觀諸眾生心之所樂，及其所種一切善根悉分別知，隨順法身，為現清淨妙色之身，即於是時而說頌曰：",
        "from": "T10n0279_033:0177b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「菩薩成就法智慧，　　悟解無邊正法門，",
        "from": "T10n0279_033:0177b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為法光明調御師，　　了知無礙真實法。",
        "from": "T10n0279_033:0177b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為法大導師，　　開示甚深難得法，",
        "from": "T10n0279_033:0177b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引導十方無量眾，　　悉令安住正法中。",
        "from": "T10n0279_033:0177b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩已飲佛法海，　　法雲普雨十方界，",
        "from": "T10n0279_033:0177b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法日出現於世間，　　闡揚妙法利群生。",
        "from": "T10n0279_033:0177b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常為難遇法施主，　　了知入法巧方便，",
        "from": "T10n0279_033:0177b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法光清淨照其心，　　於世說法恒無畏。",
        "from": "T10n0279_033:0177b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善修於法自在心，　　悉能悟入諸法門，",
        "from": "T10n0279_033:0177b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就甚深妙法海，　　普為眾生擊法鼓。",
        "from": "T10n0279_033:0177b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說甚深希有法，　　以法長養諸功德，",
        "from": "T10n0279_033:0177b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足清淨法喜心，　　示現世間佛法藏。",
        "from": "T10n0279_033:0177b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛法王所灌頂，　　成就法性智藏身，",
        "from": "T10n0279_033:0177b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能解了法實相，　　安住一切眾善法。",
        "from": "T10n0279_033:0177b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩修行第一施，　　一切如來所讚喜，",
        "from": "T10n0279_033:0177b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作皆蒙佛忍可，　　以此成就人中尊。",
        "from": "T10n0279_033:0177c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩成就妙法身，　　親從諸佛法化生，",
        "from": "T10n0279_033:0177c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利眾生作法燈，　　演說無量最勝法。",
        "from": "T10n0279_033:0177c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所修行妙法施，　　則亦觀察彼善根，",
        "from": "T10n0279_033:0177c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作眾善為眾生，　　悉以智慧而迴向。",
        "from": "T10n0279_033:0177c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有成佛功德法，　　悉以迴施諸群生，",
        "from": "T10n0279_033:0177c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願令一切皆清淨，　　到佛莊嚴之彼岸。",
        "from": "T10n0279_033:0177c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方佛剎無有量，　　悉具無量大莊嚴，",
        "from": "T10n0279_033:0177c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是莊嚴不可思，　　盡以莊嚴一國土。",
        "from": "T10n0279_033:0177c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來所有清淨智，　　願令眾生皆具足，",
        "from": "T10n0279_033:0177c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如普賢真佛子，　　一切功德自莊嚴。",
        "from": "T10n0279_033:0177c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就廣大神通力，　　往詣世界悉周遍，",
        "from": "T10n0279_033:0177c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生無有餘，　　皆使修行菩薩道。",
        "from": "T10n0279_033:0177c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來所開悟，　　十方無量諸眾生，",
        "from": "T10n0279_033:0177c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆令如普賢，　　具足修行最上行。",
        "from": "T10n0279_033:0177c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩所成就，　　種種差別諸功德，",
        "from": "T10n0279_033:0177c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是功德無有邊，　　願使眾生悉圓滿。",
        "from": "T10n0279_033:0177c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩具足自在力，　　所應學處皆往學，",
        "from": "T10n0279_033:0177c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現一切大神通，　　普詣十方無量土。",
        "from": "T10n0279_033:0177c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩能於一念頃，　　覲等眾生無數佛，",
        "from": "T10n0279_033:0177c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復於一毛端中，　　盡攝諸法皆明見。",
        "from": "T10n0279_033:0177c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間眾生無有量，　　菩薩悉能分別知，",
        "from": "T10n0279_033:0177c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛無量等眾生，　　大心供養咸令盡。",
        "from": "T10n0279_033:0177c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種名香上妙華，　　眾寶衣裳及幡蓋，",
        "from": "T10n0279_033:0177c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分布法界咸充滿，　　發心普供十方佛。",
        "from": "T10n0279_033:0177c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一毛孔中悉明見，　　不思議數無量佛，",
        "from": "T10n0279_033:0177c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切毛孔皆如是，　　普禮一切世間燈。",
        "from": "T10n0279_033:0177c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉身次第恭敬禮，　　如是無邊諸最勝，",
        "from": "T10n0279_033:0177c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以言辭普稱讚，　　窮盡未來一切劫。",
        "from": "T10n0279_033:0177c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一如來所供養具，　　其數無量等眾生，",
        "from": "T10n0279_033:0178a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是供養一如來，　　一切如來亦復然。",
        "from": "T10n0279_033:0178a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養讚歎諸如來，　　盡彼世間一切劫，",
        "from": "T10n0279_033:0178a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間劫數可終盡，　　菩薩供養無休懈。",
        "from": "T10n0279_033:0178a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間種種劫，　　於爾所劫修諸行，",
        "from": "T10n0279_033:0178a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬供養一如來，　　盡一切劫無厭足。",
        "from": "T10n0279_033:0178a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如無量劫供一佛，　　供一切佛皆如是，",
        "from": "T10n0279_033:0178a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不分別是劫數，　　於所供養生疲厭。",
        "from": "T10n0279_033:0178a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界廣大無邊際，　　菩薩觀察悉明了，",
        "from": "T10n0279_033:0178a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大蓮華遍布中，　　施等眾生無量佛。",
        "from": "T10n0279_033:0178a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶華香色皆圓滿，　　清淨莊嚴甚微妙，",
        "from": "T10n0279_033:0178a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間無可諭，　　持以供養人中尊。",
        "from": "T10n0279_033:0178a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生數等無量剎，　　諸妙寶蓋滿其中，",
        "from": "T10n0279_033:0178a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉以供養一如來，　　供一切佛皆如是。",
        "from": "T10n0279_033:0178a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香無比最殊勝，　　一切世間未曾有，",
        "from": "T10n0279_033:0178a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此供養天人師，　　窮盡眾生數等劫。",
        "from": "T10n0279_033:0178a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末香燒香上妙華，　　眾寶衣服莊嚴具，",
        "from": "T10n0279_033:0178a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是供養諸最勝，　　歡喜奉事無厭足。",
        "from": "T10n0279_033:0178a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等眾生數照世燈，　　念念成就大菩提，",
        "from": "T10n0279_033:0178a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以無邊偈稱述，　　供養人中調御者。",
        "from": "T10n0279_033:0178a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如眾生數佛世尊，　　皆修無上妙供養，",
        "from": "T10n0279_033:0178a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如眾生數無量劫，　　如是讚歎無窮盡。",
        "from": "T10n0279_033:0178a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是供養諸佛時，　　以佛神力皆周遍，",
        "from": "T10n0279_033:0178a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉見十方無量佛，　　安住普賢菩薩行。",
        "from": "T10n0279_033:0178a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去未來及現在，　　所有一切諸善根，",
        "from": "T10n0279_033:0178a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我常修普賢行，　　速得安住普賢地。",
        "from": "T10n0279_033:0178a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來所知見，　　世間無量諸眾生，",
        "from": "T10n0279_033:0178a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉願具足如普賢，　　為聰慧者所稱讚。",
        "from": "T10n0279_033:0178a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是十方諸大士，　　共所修治迴向行，",
        "from": "T10n0279_033:0178a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來為我說，　　此迴向行最無上。",
        "from": "T10n0279_033:0178b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方世界無有餘，　　其中一切諸眾生，",
        "from": "T10n0279_033:0178b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不咸令得開覺，　　悉使常如普賢行。",
        "from": "T10n0279_033:0178b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其迴向行布施，　　亦復堅持於禁戒，",
        "from": "T10n0279_033:0178b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進長時無退怯，　　忍辱柔和心不動，",
        "from": "T10n0279_033:0178b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪定持心常一緣，　　智慧了境同三昧，",
        "from": "T10n0279_033:0178b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去來現在皆通達，　　世間無有得其邊。",
        "from": "T10n0279_033:0178b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩身心及語業，　　如是所作皆清淨，",
        "from": "T10n0279_033:0178b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切修行無有餘，　　悉與普賢菩薩等。",
        "from": "T10n0279_033:0178b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如法界無分別，　　戲論染著皆永盡，",
        "from": "T10n0279_033:0178b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如涅槃無障礙，　　心常如是離諸取。",
        "from": "T10n0279_033:0178b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者所有迴向法，　　諸佛如來已開示，",
        "from": "T10n0279_033:0178b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種善根悉迴向，　　是故能成菩薩道。",
        "from": "T10n0279_033:0178b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子善學此迴向，　　無量行願悉成滿，",
        "from": "T10n0279_033:0178b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝取法界盡無餘，　　是故能成善逝力。",
        "from": "T10n0279_033:0178b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲成就佛所說，　　菩薩廣大殊勝行，",
        "from": "T10n0279_033:0178b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜應善住此迴向，　　是諸佛子號普賢。",
        "from": "T10n0279_033:0178b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生猶可數，　　三世心量亦可知，",
        "from": "T10n0279_033:0178b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是普賢諸佛子，　　功德邊際無能測。",
        "from": "T10n0279_033:0178b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一毛度空可得邊，　　眾剎為塵可知數，",
