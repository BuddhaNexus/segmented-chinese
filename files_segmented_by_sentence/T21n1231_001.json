[
    {
        "source_sentence": "大輪金剛修行悉地成就及供養",
        "from": "T21n1231_001:0166b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法",
        "from": "T21n1231_001:0166b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我依金剛頂經略述大輪持念次第。先當持",
        "from": "T21n1231_001:0166b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一淨室。",
        "from": "T21n1231_001:0166b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴飾道場起曼荼羅。",
        "from": "T21n1231_001:0166b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華幡幢蓋燒香散華。",
        "from": "T21n1231_001:0166b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應從師得受灌頂竟。",
        "from": "T21n1231_001:0166b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後親受持念教法乃可修習。",
        "from": "T21n1231_001:0166b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日三時時別一千八十遍。",
        "from": "T21n1231_001:0166b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不移易遍數滿三洛叉即獲成就。",
        "from": "T21n1231_001:0166b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每欲入道場時。",
        "from": "T21n1231_001:0166b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先心中想吽字。",
        "from": "T21n1231_001:0166b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀字化一大金剛。",
        "from": "T21n1231_001:0166b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便去入道場中至本尊前。",
        "from": "T21n1231_001:0166b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端身正立合掌至心懺悔思惟。",
        "from": "T21n1231_001:0166b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無始已來。",
        "from": "T21n1231_001:0166b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流轉生死不悟真理常處三界。",
        "from": "T21n1231_001:0166b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今懺悔所有罪障並願消滅。",
        "from": "T21n1231_001:0166b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即念懺悔除罪真言曰。",
        "from": "T21n1231_001:0166b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引薩嚩轉舌呼幡引跛尾入娑普二合吒娜賀娜嚩日囉二合野引娑嚩二合賀引由誦此真言加持力故。",
        "from": "T21n1231_001:0166b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得三業清淨三昧。",
        "from": "T21n1231_001:0166b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當頂上合掌。",
        "from": "T21n1231_001:0166b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦普禮一切佛及聖眾真言。",
        "from": "T21n1231_001:0166b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "T21n1231_001:0166b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無十方等正覺　　三世一切具三身",
        "from": "T21n1231_001:0166b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無一切大乘法　　南無不退菩薩眾",
        "from": "T21n1231_001:0166b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無諸明真實言　　南無一切諸密印",
        "from": "T21n1231_001:0166b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願慈悲護念我　　拔我出於生死泥",
        "from": "T21n1231_001:0166b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之肉眼不見知　　道眼普見我歸命",
        "from": "T21n1231_001:0166b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命真言曰。",
        "from": "T21n1231_001:0166c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從過去世　　流轉生死中",
        "from": "T21n1231_001:0166c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恣身口意業　　及嫉妬慳悋",
        "from": "T21n1231_001:0166c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪見覆心故　　違越三昧耶",
        "from": "T21n1231_001:0166c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今對大聖尊　　盡心而懺悔",
        "from": "T21n1231_001:0166c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如先佛所懺　　我今亦如是",
        "from": "T21n1231_001:0166c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願乘加持力　　眾生悉清淨",
        "from": "T21n1231_001:0166c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽虛心合　　想身如琉璃",
        "from": "T21n1231_001:0166c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外極明徹　　以三密金剛",
        "from": "T21n1231_001:0166c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持成本尊　　次以淨三業",
        "from": "T21n1231_001:0166c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印轉於五處　　成清淨澡浴",
        "from": "T21n1231_001:0166c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0166c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛掌置頂　　運心遍法界",
        "from": "T21n1231_001:0166c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親對十方佛　　菩薩金剛眾",
        "from": "T21n1231_001:0166c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我淨此身離諸垢　　及與三世身口意",
        "from": "T21n1231_001:0166c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過於大海剎塵數　　奉獻一切諸如來",
        "from": "T21n1231_001:0166c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密言曰。",
        "from": "T21n1231_001:0166c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐澄身心　　政念觀本尊",
        "from": "T21n1231_001:0166c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先結三昧耶　　定慧虛心合",
        "from": "T21n1231_001:0166c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力附忍願　　押背初節文",
        "from": "T21n1231_001:0167a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智附進力　　各捻下節文",
        "from": "T21n1231_001:0167a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀諸如來　　相好見分明",
        "from": "T21n1231_001:0167a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部三昧耶真言曰。",
        "from": "T21n1231_001:0167a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七遍頂上散　　由此能警覺",
        "from": "T21n1231_001:0167a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛來護念　　得身業清淨",
        "from": "T21n1231_001:0167a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次陳蓮華部　　如前二羽合",
        "from": "T21n1231_001:0167a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散舒餘六度　　微屈八葉蓮",
        "from": "T21n1231_001:0167a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密想觀自在　　相好極端嚴",
        "from": "T21n1231_001:0167a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并無量俱胝　　蓮華族聖眾",
        "from": "T21n1231_001:0167a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圍遶其加持　　獲得語業淨",
        "from": "T21n1231_001:0167a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0167a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛三昧耶　　左覆仰右羽",
        "from": "T21n1231_001:0167a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令指背相著　　檀智并禪慧",
        "from": "T21n1231_001:0167a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各反相叉　　餘如三股杵",
        "from": "T21n1231_001:0167a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當想金剛藏　　忿怒光赫奕",
        "from": "T21n1231_001:0167a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應察金剛族　　眷屬自圍繞",
        "from": "T21n1231_001:0167a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此加持故　　獲意業清淨",
        "from": "T21n1231_001:0167a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0167a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當被甲冑　　福智內相叉",
        "from": "T21n1231_001:0167a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願竪相合　　進力屈如鉤",
        "from": "T21n1231_001:0167a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智押戒方　　印五處成甲",
        "from": "T21n1231_001:0167a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍緣諸有情　　速令離障難",
        "from": "T21n1231_001:0167a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸魔及惡人　　無能得其便",
        "from": "T21n1231_001:0167a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0167a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結地界印　　以戒忍二度",
        "from": "T21n1231_001:0167b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於願方間　　各繳入掌中",
        "from": "T21n1231_001:0167b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧進力度　　禪智各相合",
        "from": "T21n1231_001:0167b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相如金剛杵　　禪智按於地",
        "from": "T21n1231_001:0167b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印明加持故　　下至金剛輪",
        "from": "T21n1231_001:0167b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成堅固界　　金剛不壞座",
        "from": "T21n1231_001:0167b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天魔不能動　　穢惡成清淨",
        "from": "T21n1231_001:0167b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0167b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛牆　　準前地界印",
        "from": "T21n1231_001:0167b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開掌竪禪智　　從印流熾焰",
        "from": "T21n1231_001:0167b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右旋遶三匝　　即成堅固界",
        "from": "T21n1231_001:0167b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0167b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結纔發意　　轉法輪密印",
        "from": "T21n1231_001:0167b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各作金剛拳　　進力檀慧鉤",
        "from": "T21n1231_001:0167b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此加持故　　身器成清淨",
        "from": "T21n1231_001:0167b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成法曼荼羅　　以印觸壇上",
        "from": "T21n1231_001:0167b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成金剛部　　調伏曼荼羅",
        "from": "T21n1231_001:0167b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印觸本尊像　　及置虛空中",
        "from": "T21n1231_001:0167b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆成曼荼羅　　行者設越法",
        "from": "T21n1231_001:0167b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誤破三昧耶　　真言加持力",
        "from": "T21n1231_001:0167b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒品淨圓滿真言曰。",
        "from": "T21n1231_001:0167b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結虛空藏　　廣大供養印",
        "from": "T21n1231_001:0167b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當合定慧手　　忍願外相叉",
        "from": "T21n1231_001:0167b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力麼抳寶　　印流諸供養",
        "from": "T21n1231_001:0167c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣服飲食雲　　宮殿樓閣等",
        "from": "T21n1231_001:0167c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及香華音樂　　種種寶幢幡",
        "from": "T21n1231_001:0167c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲海遍十方　　真實成供養",
        "from": "T21n1231_001:0167c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一如極樂界　　壇中地哩力二合成字",
        "from": "T21n1231_001:0167c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放於大光明　　如紅頗梨色",
        "from": "T21n1231_001:0167c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照十方剎　　遇斯光明者",
        "from": "T21n1231_001:0167c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業障盡消除　　以我功德力",
        "from": "T21n1231_001:0167c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來加持力　　及以法界力",
        "from": "T21n1231_001:0167c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普供養而住真言曰。",
        "from": "T21n1231_001:0167c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結車輅印　　二羽仰相叉",
        "from": "T21n1231_001:0167c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各以禪智度　　捻進力下節",
        "from": "T21n1231_001:0167c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶車輅成　　往彼金剛宮",
        "from": "T21n1231_001:0167c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請尊及眷屬　　乘此寶車輅",
        "from": "T21n1231_001:0167c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "送車輅真言曰。",
        "from": "T21n1231_001:0167c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不散前印相　　當以禪智度",
        "from": "T21n1231_001:0167c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向身撥進力　　便成請車輅",
        "from": "T21n1231_001:0167c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0167c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "車輅住虛空　　當迎諸聖眾",
        "from": "T21n1231_001:0167c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福智內縛拳　　智度如鉤形",
        "from": "T21n1231_001:0167c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向身三請召　　本尊并眷屬",
        "from": "T21n1231_001:0167c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不捨於本誓　　赴請降道場",
        "from": "T21n1231_001:0167c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0167c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結降三世　　忿怒金剛印",
        "from": "T21n1231_001:0168a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手金剛拳　　檀慧反相鉤右押左",
        "from": "T21n1231_001:0168a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力當心竪　　心想成本尊",
        "from": "T21n1231_001:0168a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右足踏大天　　左踏烏魔妃",
        "from": "T21n1231_001:0168a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍身燃猛焰　　印心額喉頂",
        "from": "T21n1231_001:0168a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左旋成辟除　　右轉堅營界",
        "from": "T21n1231_001:0168a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面皆忿怒　　八臂執器杖",
        "from": "T21n1231_001:0168a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立如丁字勢　　入此三摩地",
        "from": "T21n1231_001:0168a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應住菩提心　　深起於悲愍",
        "from": "T21n1231_001:0168a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅除內外障真言曰。",
        "from": "T21n1231_001:0168a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上方金剛網　　即前地界印",
        "from": "T21n1231_001:0168a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智捻進力下文　　頂上三旋遶",
        "from": "T21n1231_001:0168a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛堅固網真言曰。",
        "from": "T21n1231_001:0168a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛火院界　　左掩右羽背",
        "from": "T21n1231_001:0168a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搩竪禪智度　　想火焰熾盛",
        "from": "T21n1231_001:0168a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從印流光明　　右旋於牆外",
        "from": "T21n1231_001:0168a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三重火焰圍　　諸佛菩薩眾",
        "from": "T21n1231_001:0168a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶尚不違越　　何況諸天魔",
        "from": "T21n1231_001:0168a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能嬈近者真言曰。",
        "from": "T21n1231_001:0168a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻閼伽印　　想浴聖眾足",
        "from": "T21n1231_001:0168a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令修行者　　獲得三業淨",
        "from": "T21n1231_001:0168a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0168b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復獻蓮華座　　合掌舒戒方",
        "from": "T21n1231_001:0168b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及忍願進力　　圓如八葉蓮",
        "from": "T21n1231_001:0168b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想從印流出　　無量金剛華",
        "from": "T21n1231_001:0168b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻諸聖尊真言曰。",
        "from": "T21n1231_001:0168b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大不空王　　摩抳供養印",
        "from": "T21n1231_001:0168b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當合金剛掌　　進力蹙如寶",
        "from": "T21n1231_001:0168b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔誦祕密明　　遍於十方界",
        "from": "T21n1231_001:0168b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普雨大供養　　塗香華鬘雲",
        "from": "T21n1231_001:0168b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香衣服雲　　麼尼光明燈",
        "from": "T21n1231_001:0168b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幢幡寶帳雲　　種種天音樂",
        "from": "T21n1231_001:0168b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍諸佛土　　真實成供養",
        "from": "T21n1231_001:0168b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲無量福聚　　如虛空無邊",
        "from": "T21n1231_001:0168b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常生諸佛會　　拔濟諸有情",
        "from": "T21n1231_001:0168b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0168b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專注觀本尊　　分明如目前",
        "from": "T21n1231_001:0168b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲忿怒相　　眷屬自圍遶",
        "from": "T21n1231_001:0168b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念生仰慕　　現前獲三昧",
        "from": "T21n1231_001:0168b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔誠金剛讚　　讚曰",
        "from": "T21n1231_001:0168b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾聖皆歡喜　　觀想本尊頂",
        "from": "T21n1231_001:0168b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上有金剛輪　　空中而旋轉",
        "from": "T21n1231_001:0168c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座下二金輪　　次金剛部母",
        "from": "T21n1231_001:0168c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次大輪金剛　　根本懺悔印",
        "from": "T21n1231_001:0168c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒方進力內相叉　　檀慧忍願智相合",
        "from": "T21n1231_001:0168c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如輪三角光明焰　　禪智在頂乞歡喜",
        "from": "T21n1231_001:0168c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今依法結護已　　皆有闕犯三昧耶",
        "from": "T21n1231_001:0168c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密持蘇摩金剛明　　懺悔四時諸過失",
        "from": "T21n1231_001:0168c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次拍金剛掌　　令聖眾歡喜",
        "from": "T21n1231_001:0168c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0168c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手捧念珠　　至頂置於心",
        "from": "T21n1231_001:0168c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0168c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合玉呬野二合惹跛三麼曳吽引持珠真言曰。",
        "from": "T21n1231_001:0168c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀妙菩提心　　圓明淨月輪",
        "from": "T21n1231_001:0168c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密暗字門　　紫磨金色光",
        "from": "T21n1231_001:0168c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行住及坐臥　　常令現其前",
        "from": "T21n1231_001:0168c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心不動搖　　輕慢觀諸事",
        "from": "T21n1231_001:0168c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小聲自耳聞　　不緩亦不急",
        "from": "T21n1231_001:0168c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如念誦於時　　切緣出道場",
        "from": "T21n1231_001:0168c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當安諸聖眾　　偈曰",
        "from": "T21n1231_001:0168c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉請來降三摩地　　不違本願滿世間",
        "from": "T21n1231_001:0169a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空事業暫令安　　唯願聖眾歸圓寂",
        "from": "T21n1231_001:0169a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當振金剛鈴。",
        "from": "T21n1231_001:0169a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1231_001:0169a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安祥徐步出　　入稱吽字明",
        "from": "T21n1231_001:0169a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念畢欲發遺　　再結普供養",
        "from": "T21n1231_001:0169a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次陳部母明　　分付真言句",
        "from": "T21n1231_001:0169a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為一切　　至求菩提果",
        "from": "T21n1231_001:0169a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願大聖尊　　成就我遍數",
        "from": "T21n1231_001:0169a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常結部母印　　百字明加持",
        "from": "T21n1231_001:0169a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令本尊歡喜　　火院左旋轉",
        "from": "T21n1231_001:0169a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成解大印誦偈曰。",
        "from": "T21n1231_001:0169a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世諸如來　　救世諸菩薩",
        "from": "T21n1231_001:0169a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不斷大乘教　　到殊勝智地",
        "from": "T21n1231_001:0169a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願聖天眾　　決定證知我",
        "from": "T21n1231_001:0169a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各當隨所安　　後復垂哀赴",
        "from": "T21n1231_001:0169a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦發遣偈。",
        "from": "T21n1231_001:0169a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已作如是勝上利　　施與一切眾生竟",
        "from": "T21n1231_001:0169a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸聖者歸本土　　振鈴不違弘誓願",
        "from": "T21n1231_001:0169a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次開發發願　　次三部護身",
        "from": "T21n1231_001:0169a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮懺依常儀　　隨意任經行",
        "from": "T21n1231_001:0169a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大輪金剛修行悉地成就及供養法時寬延二歲次己巳七月穀旦",
        "from": "T21n1231_001:0169a26_100",
        "context_with_next_sentence": false
    }
]