{
    "T47n1997_019:0800c13_0": "圓悟佛果禪師語錄卷第十九",
    "T47n1997_019:0800c15_0": "宋平江府虎丘山門人紹隆等編",
    "T47n1997_019:0800c16_0": "頌古下",
    "T47n1997_019:0800c17_0": "舉。",
    "T47n1997_019:0800c17_1": "教中道。",
    "T47n1997_019:0800c17_2": "未離兜率已降王宮。",
    "T47n1997_019:0800c17_3": "未出母胎度人已畢。",
    "T47n1997_019:0800c18_4": "大象本無形。",
    "T47n1997_019:0800c18_5": "至虛包萬有。",
    "T47n1997_019:0800c18_6": "末後已太過。",
    "T47n1997_019:0800c19_7": "面南看北斗。",
    "T47n1997_019:0800c19_8": "王宮兜率度生出胎。",
    "T47n1997_019:0800c19_9": "始終一貫初無去來。",
    "T47n1997_019:0800c20_10": "掃蹤滅跡除根蔕。",
    "T47n1997_019:0800c20_11": "火裏蓮華處處開。",
    "T47n1997_019:0800c22_0": "舉。",
    "T47n1997_019:0800c22_1": "僧問雲門。",
    "T47n1997_019:0800c22_2": "生死到來如何回避。",
    "T47n1997_019:0800c22_3": "門云。",
    "T47n1997_019:0800c22_4": "在什麼處。",
    "T47n1997_019:0800c24_0": "針眼魚吞大千界。",
    "T47n1997_019:0800c24_1": "蟭螟蟲吐妙高山。",
    "T47n1997_019:0800c24_2": "太虛包括無遺漏。",
    "T47n1997_019:0800c25_3": "萬彙全歸指掌間。",
    "T47n1997_019:0800c25_4": "起復滅去還來。",
    "T47n1997_019:0800c26_0": "石橋踏斷通身黑。",
    "T47n1997_019:0800c26_1": "那知華頂是天台。",
    "T47n1997_019:0800c27_0": "舉。",
    "T47n1997_019:0800c27_1": "丹霞初見馬祖。",
    "T47n1997_019:0800c27_2": "以兩手托幞頭祖云。",
    "T47n1997_019:0800c27_3": "吾非汝師。",
    "T47n1997_019:0800c28_4": "南嶽石頭處去。",
    "T47n1997_019:0800c28_5": "霞遂至石頭。",
    "T47n1997_019:0800c28_6": "如前托幞頭。",
    "T47n1997_019:0800c29_7": "頭云。",
    "T47n1997_019:0800c29_8": "著槽[木*敞]去。",
    "T47n1997_019:0800c29_9": "霞依童行次。",
    "T47n1997_019:0800c29_10": "一日石頭為眾云。",
    "T47n1997_019:0801a01_11": "今日齋後普請剗佛殿前草。",
    "T47n1997_019:0801a01_12": "眾競具鋤鍬。",
    "T47n1997_019:0801a02_13": "霞獨洗頭。",
    "T47n1997_019:0801a02_14": "棒剃刀於石頭前胡跪。",
    "T47n1997_019:0801a02_15": "頭云作什麼。",
    "T47n1997_019:0801a03_16": "霞云。",
    "T47n1997_019:0801a03_17": "請師剗草。",
    "T47n1997_019:0801a03_18": "石頭笑為剃髮。",
    "T47n1997_019:0801a03_19": "呼與授戒。",
    "T47n1997_019:0801a04_20": "霞掩耳而去。",
    "T47n1997_019:0801a04_21": "却回江西馬祖院。",
    "T47n1997_019:0801a04_22": "騎聖僧項。",
    "T47n1997_019:0801a05_0": "眾驚報馬祖。",
    "T47n1997_019:0801a05_1": "馬祖親來見乃云。",
    "T47n1997_019:0801a05_2": "我子天然。",
    "T47n1997_019:0801a05_3": "霞遂作禮云。",
    "T47n1997_019:0801a06_4": "謝師安名。",
    "T47n1997_019:0801a06_5": "祖問。",
    "T47n1997_019:0801a06_6": "甚處來。",
    "T47n1997_019:0801a06_7": "霞云。",
    "T47n1997_019:0801a06_8": "石頭來。",
    "T47n1997_019:0801a07_9": "祖云。",
    "T47n1997_019:0801a07_10": "石頭路滑。",
    "T47n1997_019:0801a07_11": "子莫曾踏倒麼。",
    "T47n1997_019:0801a07_12": "霞云。",
    "T47n1997_019:0801a08_0": "若踏倒則不來也。",
    "T47n1997_019:0801a09_0": "問一答十告往知來。",
    "T47n1997_019:0801a09_1": "龍馳虎驟玉轉珠回。",
    "T47n1997_019:0801a09_2": "聊聞舉著已瞥地。",
    "T47n1997_019:0801a10_3": "剔起便行何俊哉。",
    "T47n1997_019:0801a10_4": "剗草固奇崛。",
    "T47n1997_019:0801a11_5": "安名尤突兀。",
    "T47n1997_019:0801a11_6": "二老略玄黃。",
    "T47n1997_019:0801a11_7": "賞茲千里骨。",
    "T47n1997_019:0801a11_8": "真規鎮儼然。",
    "T47n1997_019:0801a12_9": "覿面看標格。",
    "T47n1997_019:0801a12_10": "騰雲一舉迷風日。",
    "T47n1997_019:0801a13_0": "舉。",
    "T47n1997_019:0801a13_1": "雲門示眾云。",
    "T47n1997_019:0801a13_2": "乾坤之內宇宙之間。",
    "T47n1997_019:0801a13_3": "中有一寶祕在形山。",
    "T47n1997_019:0801a14_4": "著燈籠向佛殿裏。",
    "T47n1997_019:0801a14_5": "拈三門安燈籠上。",
    "T47n1997_019:0801a16_0": "虎豹文章麒麟頭角。",
    "T47n1997_019:0801a16_1": "輝天焯地堆山積嶽。",
    "T47n1997_019:0801a16_2": "拶破面門兮蓋色騎聲。",
    "T47n1997_019:0801a17_3": "截斷羅籠兮解黏去縛。",
    "T47n1997_019:0801a18_0": "罷却干戈百草頭。",
    "T47n1997_019:0801a18_1": "萬里秋天飛一鶚。",
    "T47n1997_019:0801a19_0": "舉。",
    "T47n1997_019:0801a19_1": "雪峯示眾云。",
    "T47n1997_019:0801a19_2": "盡大地撮來如粟米粒大。",
    "T47n1997_019:0801a19_3": "拋向面前漆桶不會。",
    "T47n1997_019:0801a20_4": "打鼓普請看。",
    "T47n1997_019:0801a21_0": "疾焰過鋒奔流度刃。",
    "T47n1997_019:0801a21_1": "唱拍相隨拳踢相應。",
    "T47n1997_019:0801a21_2": "驀然轟起震天雷。",
    "T47n1997_019:0801a22_3": "百草顛頭春色回。",
    "T47n1997_019:0801a23_0": "舉僧問馬祖。",
    "T47n1997_019:0801a23_1": "如何是佛。",
    "T47n1997_019:0801a23_2": "祖云。",
    "T47n1997_019:0801a23_3": "即心即佛。",
    "T47n1997_019:0801a24_0": "無鬚鎖子八面玲瓏。",
    "T47n1997_019:0801a24_1": "不撥自轉南北西東。",
    "T47n1997_019:0801a24_2": "海神知貴不知價。",
    "T47n1997_019:0801a25_3": "留向人間光照夜。",
    "T47n1997_019:0801a26_0": "舉。",
    "T47n1997_019:0801a26_1": "僧問馬祖。",
    "T47n1997_019:0801a26_2": "如何是佛。",
    "T47n1997_019:0801a26_3": "祖云。",
    "T47n1997_019:0801a26_4": "非心非佛。",
    "T47n1997_019:0801a27_0": "碧海珠荊山璧。",
    "T47n1997_019:0801a27_1": "耀乾坤唯別識。",
    "T47n1997_019:0801a27_2": "利刀剪却無根樹。",
    "T47n1997_019:0801a28_3": "萬疊峯巒歛煙霧。",
    "T47n1997_019:0801a29_0": "舉。",
    "T47n1997_019:0801a29_1": "馬祖與百丈同遊山。",
    "T47n1997_019:0801a29_2": "見野鴨子飛過。",
    "T47n1997_019:0801a29_3": "祖云。",
    "T47n1997_019:0801b01_0": "是什麼。",
    "T47n1997_019:0801b01_1": "丈云。",
    "T47n1997_019:0801b01_2": "野鴨子。",
    "T47n1997_019:0801b01_3": "祖云。",
    "T47n1997_019:0801b01_4": "向什麼處去也。",
    "T47n1997_019:0801b02_0": "丈云。",
    "T47n1997_019:0801b02_1": "飛過了也。",
    "T47n1997_019:0801b02_2": "祖將百丈鼻孔扭。",
    "T47n1997_019:0801b02_3": "丈作忍痛聲。",
    "T47n1997_019:0801b03_4": "祖云。",
    "T47n1997_019:0801b03_5": "何曾飛去。",
    "T47n1997_019:0801b03_6": "丈於此有省。",
    "T47n1997_019:0801b04_0": "野鴨過前溪。",
    "T47n1997_019:0801b04_1": "千峯凜寒色。",
    "T47n1997_019:0801b04_2": "相顧不知歸。",
    "T47n1997_019:0801b04_3": "未免資傍擊。",
    "T47n1997_019:0801b05_4": "扭破疑團葛怛消。",
    "T47n1997_019:0801b05_5": "捎風直下透青霄。",
    "T47n1997_019:0801b06_0": "雲山海月渾閑事。",
    "T47n1997_019:0801b06_1": "一語歸宗萬國朝。",
    "T47n1997_019:0801b07_0": "舉。",
    "T47n1997_019:0801b07_1": "僧問鏡清。",
    "T47n1997_019:0801b07_2": "新年頭還有佛法也無。",
    "T47n1997_019:0801b07_3": "清云有。",
    "T47n1997_019:0801b08_0": "僧云。",
    "T47n1997_019:0801b08_1": "如何是新年頭佛法。",
    "T47n1997_019:0801b08_2": "清云。",
    "T47n1997_019:0801b08_3": "元正啟祚。",
    "T47n1997_019:0801b08_4": "僧云。",
    "T47n1997_019:0801b09_5": "謝師答話。",
    "T47n1997_019:0801b09_6": "清云。",
    "T47n1997_019:0801b09_7": "鏡清今日失利。",
    "T47n1997_019:0801b09_8": "又僧問智門明教。",
    "T47n1997_019:0801b10_9": "新年頭還有佛法也無。",
    "T47n1997_019:0801b10_10": "教云無。",
    "T47n1997_019:0801b10_11": "僧云。",
    "T47n1997_019:0801b11_0": "年年是好年。",
    "T47n1997_019:0801b11_1": "日日是好日。",
    "T47n1997_019:0801b11_2": "為什麼却無。",
    "T47n1997_019:0801b11_3": "教云。",
    "T47n1997_019:0801b12_0": "張公喫酒李公醉。",
    "T47n1997_019:0801b12_1": "僧云。",
    "T47n1997_019:0801b12_2": "老老大大龍頭蛇尾。",
    "T47n1997_019:0801b13_0": "教云。",
    "T47n1997_019:0801b13_1": "明教今日失利。",
    "T47n1997_019:0801b14_0": "穩密田地神通遊戲。",
    "T47n1997_019:0801b14_1": "佛法新年頭。",
    "T47n1997_019:0801b14_2": "有無俱失利。",
    "T47n1997_019:0801b15_3": "一概等虛空。",
    "T47n1997_019:0801b15_4": "豈容立巴鼻。",
    "T47n1997_019:0801b15_5": "草上之風祖令行。",
    "T47n1997_019:0801b16_6": "唯知雷罷不停聲。",
    "T47n1997_019:0801b17_0": "舉。",
    "T47n1997_019:0801b17_1": "僧問琅瑘。",
    "T47n1997_019:0801b17_2": "清淨本然云何忽生山河大地。",
    "T47n1997_019:0801b18_0": "瑘云。",
    "T47n1997_019:0801b18_1": "清淨本然云何忽生山河大地。",
    "T47n1997_019:0801b18_2": "其僧有省。",
    "T47n1997_019:0801b20_0": "相罵饒爾接嘴。",
    "T47n1997_019:0801b20_1": "相唾饒爾潑水。",
    "T47n1997_019:0801b20_2": "塵舉大地收。",
    "T47n1997_019:0801b21_0": "華開世界起。",
    "T47n1997_019:0801b21_1": "一模脫出絕功勳。",
    "T47n1997_019:0801b21_2": "句裏挨開大施門。",
    "T47n1997_019:0801b23_0": "舉。",
    "T47n1997_019:0801b23_1": "僧問長沙。",
    "T47n1997_019:0801b23_2": "本來身還成佛否。",
    "T47n1997_019:0801b23_3": "沙云。",
    "T47n1997_019:0801b23_4": "爾道大唐天子還刈茅割稻否。",
    "T47n1997_019:0801b24_5": "僧云。",
    "T47n1997_019:0801b24_6": "成佛又是何人。",
    "T47n1997_019:0801b25_0": "沙云。",
    "T47n1997_019:0801b25_1": "是爾成佛知不知。",
    "T47n1997_019:0801b26_0": "巨嶽何曾乏土。",
    "T47n1997_019:0801b26_1": "唐皇豈可刈茅。",
    "T47n1997_019:0801b26_2": "禮拜近前叉手。",
    "T47n1997_019:0801b27_3": "西天十萬迢迢。",
    "T47n1997_019:0801b27_4": "古佛即自己。",
    "T47n1997_019:0801b27_5": "自己即古佛。",
    "T47n1997_019:0801b28_0": "珊瑚瀲灔十洲春。",
    "T47n1997_019:0801b28_1": "蟾蜍映奪驪龍窟。",
    "T47n1997_019:0801b29_0": "舉。",
    "T47n1997_019:0801b29_1": "僧問百丈。",
    "T47n1997_019:0801b29_2": "如何是奇特事。",
    "T47n1997_019:0801b29_3": "丈云。",
    "T47n1997_019:0801b29_4": "獨坐大雄峯。",
    "T47n1997_019:0801c01_5": "僧禮拜。",
    "T47n1997_019:0801c01_6": "丈便打。",
    "T47n1997_019:0801c02_0": "醬裏著鹽雪中送炭。",
    "T47n1997_019:0801c02_1": "纔捋虎鬚棒頭有眼。",
    "T47n1997_019:0801c02_2": "怪來獨坐大雄山。",
    "T47n1997_019:0801c03_3": "他家曾踏上頭關。",
    "T47n1997_019:0801c04_0": "舉。",
    "T47n1997_019:0801c04_1": "僧問香林。",
    "T47n1997_019:0801c04_2": "如何是室內一盞燈。",
    "T47n1997_019:0801c04_3": "林云。",
    "T47n1997_019:0801c04_4": "三人證龜成鼈。",
    "T47n1997_019:0801c06_0": "皎皎清光遍界莫藏。",
    "T47n1997_019:0801c06_1": "聲拋不出色豈能彰。",
    "T47n1997_019:0801c06_2": "直下斬釘截鐵。",
    "T47n1997_019:0801c07_3": "剗却古今途轍。",
    "T47n1997_019:0801c07_4": "高出臨濟德山。",
    "T47n1997_019:0801c08_0": "三人證龜成鼈。",
    "T47n1997_019:0801c08_1": "別別。",
    "T47n1997_019:0801c08_2": "一回喫水一回噎。",
    "T47n1997_019:0801c09_0": "舉。",
    "T47n1997_019:0801c09_1": "麻谷持錫見章敬。",
    "T47n1997_019:0801c09_2": "遶繩床三匝振錫一下卓然而立。",
    "T47n1997_019:0801c10_3": "敬云。",
    "T47n1997_019:0801c10_4": "如是如是。",
    "T47n1997_019:0801c10_5": "後到南泉。",
    "T47n1997_019:0801c10_6": "亦遶繩床三匝振錫一下卓然而立。",
    "T47n1997_019:0801c11_7": "泉云。",
    "T47n1997_019:0801c11_8": "不是不是。",
    "T47n1997_019:0801c12_0": "谷云。",
    "T47n1997_019:0801c12_1": "章敬道是。",
    "T47n1997_019:0801c12_2": "和尚為什麼却道不是。",
    "T47n1997_019:0801c12_3": "泉云。",
    "T47n1997_019:0801c13_0": "章敬則是是。",
    "T47n1997_019:0801c13_1": "汝不是。",
    "T47n1997_019:0801c13_2": "此是風力所轉。",
    "T47n1997_019:0801c13_3": "終歸敗壞。",
    "T47n1997_019:0801c15_0": "如是不是去却藥忌。",
    "T47n1997_019:0801c15_1": "擬犯封疆全軍失利。",
    "T47n1997_019:0801c15_2": "杖頭突出古菱華。",
    "T47n1997_019:0801c16_3": "舉世風流屬當家。",
    "T47n1997_019:0801c17_0": "舉。",
    "T47n1997_019:0801c17_1": "僧問藥山。",
    "T47n1997_019:0801c17_2": "平田淺草塵鹿成群。",
    "T47n1997_019:0801c17_3": "如何射得塵中塵。",
    "T47n1997_019:0801c18_4": "山云。",
    "T47n1997_019:0801c18_5": "看箭。",
    "T47n1997_019:0801c18_6": "僧便放身倒。",
    "T47n1997_019:0801c18_7": "山云。",
    "T47n1997_019:0801c18_8": "侍者拕出這死漢僧便起走。",
    "T47n1997_019:0801c19_9": "山云。",
    "T47n1997_019:0801c19_10": "弄泥團漢有什麼數。",
    "T47n1997_019:0801c21_0": "獵人有神箭。",
    "T47n1997_019:0801c21_1": "射得塵中塵。",
    "T47n1997_019:0801c21_2": "箭下快承當。",
    "T47n1997_019:0801c21_3": "跳出曹溪路。",
    "T47n1997_019:0801c22_4": "翻身踏著上頭關。",
    "T47n1997_019:0801c22_5": "敵勝驚群瞥爾間。",
    "T47n1997_019:0801c23_0": "舉。",
    "T47n1997_019:0801c23_1": "雲門示眾云。",
    "T47n1997_019:0801c23_2": "藥病相治。",
    "T47n1997_019:0801c23_3": "盡大地是藥。",
    "T47n1997_019:0801c23_4": "那箇是自己。",
    "T47n1997_019:0801c25_0": "太嶢敲全殺活。",
    "T47n1997_019:0801c25_1": "絕承當無摸索。",
    "T47n1997_019:0801c25_2": "寰中意氣閫外籌略。",
    "T47n1997_019:0801c26_3": "倒退三千里。",
    "T47n1997_019:0801c26_4": "盡大地是藥。",
    "T47n1997_019:0801c26_5": "錯錯。",
    "T47n1997_019:0801c26_6": "利劍七星光閃爍。",
    "T47n1997_019:0801c28_0": "舉。",
    "T47n1997_019:0801c28_1": "乾峯示眾云。",
    "T47n1997_019:0801c28_2": "法身有三種病二種光。",
    "T47n1997_019:0801c28_3": "須是一一透得始解穩坐。",
    "T47n1997_019:0801c29_4": "雖然如是。",
    "T47n1997_019:0801c29_5": "更須知有照用同時向上一竅始得。",
    "T47n1997_019:0802a01_6": "雲門出眾問云。",
    "T47n1997_019:0802a01_7": "只如庵內人。",
    "T47n1997_019:0802a02_8": "為什麼不見庵外事。",
    "T47n1997_019:0802a02_9": "峯呵呵大笑。",
    "T47n1997_019:0802a02_10": "門云。",
    "T47n1997_019:0802a03_11": "猶是學人疑處在峯云。",
    "T47n1997_019:0802a03_12": "子是什麼心行。",
    "T47n1997_019:0802a03_13": "門云。",
    "T47n1997_019:0802a04_14": "也要和尚相委悉。",
    "T47n1997_019:0802a04_15": "峯云。",
    "T47n1997_019:0802a04_16": "直須恁麼始解穩坐。",
    "T47n1997_019:0802a06_0": "動絃別曲聞一知十。",
    "T47n1997_019:0802a06_1": "手搦手擡以膠投漆。",
    "T47n1997_019:0802a06_2": "庵內不見庵外。",
    "T47n1997_019:0802a07_3": "無孔鐵槌不會。",
    "T47n1997_019:0802a07_4": "人生相識貴知音。",
    "T47n1997_019:0802a08_5": "水入水兮金博金。",
    "T47n1997_019:0802a09_0": "舉。",
    "T47n1997_019:0802a09_1": "靈雲見桃華悟道有頌。",
    "T47n1997_019:0802a09_2": "三十年來尋劍客。",
    "T47n1997_019:0802a10_0": "幾回葉落又抽枝。",
    "T47n1997_019:0802a10_1": "自從一見桃華後。",
    "T47n1997_019:0802a10_2": "直至如今更不疑。",
    "T47n1997_019:0802a11_3": "玄沙云。",
    "T47n1997_019:0802a11_4": "諦當甚諦當。",
    "T47n1997_019:0802a11_5": "敢保老兄未徹在。",
    "T47n1997_019:0802a13_0": "陌上笑春風。",
    "T47n1997_019:0802a13_1": "枝頭漏消息。",
    "T47n1997_019:0802a13_2": "紅光爍太虛。",
    "T47n1997_019:0802a13_3": "豈藉陽和力。",
    "T47n1997_019:0802a14_4": "學劍宗師既不疑。",
    "T47n1997_019:0802a14_5": "玄沙未徹最新奇。",
    "T47n1997_019:0802a15_0": "掃除學路刮肌骨。",
    "T47n1997_019:0802a15_1": "格外之機如電拂。",
    "T47n1997_019:0802a16_0": "舉。",
    "T47n1997_019:0802a16_1": "雲門問洞山。",
    "T47n1997_019:0802a16_2": "近離甚處。",
    "T47n1997_019:0802a16_3": "山云查渡。",
    "T47n1997_019:0802a16_4": "門云。",
    "T47n1997_019:0802a17_0": "夏在甚處。",
    "T47n1997_019:0802a17_1": "山云。",
    "T47n1997_019:0802a17_2": "湖南報慈。",
    "T47n1997_019:0802a17_3": "門云。",
    "T47n1997_019:0802a17_4": "幾時離彼中。",
    "T47n1997_019:0802a18_5": "山云。",
    "T47n1997_019:0802a18_6": "今年八月。",
    "T47n1997_019:0802a18_7": "門云。",
    "T47n1997_019:0802a18_8": "放汝三頓棒。",
    "T47n1997_019:0802a18_9": "次日洞山往問。",
    "T47n1997_019:0802a19_10": "昨蒙和尚放某三頓棒。",
    "T47n1997_019:0802a19_11": "未審過在什麼處。",
    "T47n1997_019:0802a20_12": "門云。",
    "T47n1997_019:0802a20_13": "飯袋子。",
    "T47n1997_019:0802a20_14": "江西湖南便恁麼去。",
    "T47n1997_019:0802a20_15": "洞山大悟。",
    "T47n1997_019:0802a22_0": "見兔放鷹因行掉臂。",
    "T47n1997_019:0802a22_1": "赤骨歷窮方圖富貴。",
    "T47n1997_019:0802a22_2": "放三頓棒尚遲疑。",
    "T47n1997_019:0802a23_3": "再挨方識利頭錐。",
    "T47n1997_019:0802a23_4": "單提獨脚機關外。",
    "T47n1997_019:0802a24_5": "明眼衲僧猶不會。",
    "T47n1997_019:0802a25_0": "舉。",
    "T47n1997_019:0802a25_1": "三聖問雪峯。",
    "T47n1997_019:0802a25_2": "透網金鱗以何為食。",
    "T47n1997_019:0802a25_3": "峯云。",
    "T47n1997_019:0802a25_4": "待汝出網來向爾道。",
    "T47n1997_019:0802a26_5": "聖云。",
    "T47n1997_019:0802a26_6": "一千五百人善知識。",
    "T47n1997_019:0802a27_0": "話頭也不識。",
    "T47n1997_019:0802a27_1": "峯云。",
    "T47n1997_019:0802a27_2": "老僧住持事煩。",
    "T47n1997_019:0802a28_0": "百草頭出沒。",
    "T47n1997_019:0802a28_1": "三界外遨遊。",
    "T47n1997_019:0802a28_2": "徒布漫天網。",
    "T47n1997_019:0802a28_3": "虛下釣鼇鉤。",
    "T47n1997_019:0802a29_4": "搖鱗振鬣撼乾坤。",
    "T47n1997_019:0802a29_5": "兀目昂頭洪浪噴。",
    "T47n1997_019:0802b01_0": "棒雨點喝雷奔。",
    "T47n1997_019:0802b01_1": "肯將爭戰定功勳。",
    "T47n1997_019:0802b02_0": "舉。",
    "T47n1997_019:0802b02_1": "僧問趙州。",
    "T47n1997_019:0802b02_2": "見說和尚親見南泉是否。",
    "T47n1997_019:0802b02_3": "州云。",
    "T47n1997_019:0802b03_0": "鎮州出大蘿蔔。",
    "T47n1997_019:0802b04_0": "鎮州出大蘿蔔。",
    "T47n1997_019:0802b04_1": "猛虎不食伏肉。",
    "T47n1997_019:0802b04_2": "直饒眼似流星。",
    "T47n1997_019:0802b05_3": "爭免持南作北。",
    "T47n1997_019:0802b05_4": "老趙州逈殊絕。",
    "T47n1997_019:0802b05_5": "片言本自定乾坤。",
    "T47n1997_019:0802b06_6": "返使叢林鬧聒聒。",
    "T47n1997_019:0802b07_0": "舉。",
    "T47n1997_019:0802b07_1": "陸亘大夫謂南泉云。",
    "T47n1997_019:0802b07_2": "肇法師也甚奇怪。",
    "T47n1997_019:0802b07_3": "解道天地與我同根。",
    "T47n1997_019:0802b08_4": "萬物與我一體。",
    "T47n1997_019:0802b08_5": "泉云。",
    "T47n1997_019:0802b08_6": "大夫。",
    "T47n1997_019:0802b09_0": "陸應諾。",
    "T47n1997_019:0802b09_1": "泉指華云。",
    "T47n1997_019:0802b09_2": "時人見此一株華如夢相似。",
    "T47n1997_019:0802b11_0": "山潤石蘊玉。",
    "T47n1997_019:0802b11_1": "林秀淵藏珠。",
    "T47n1997_019:0802b11_2": "見此一株華似夢。",
    "T47n1997_019:0802b12_0": "灼然根體不同途。",
    "T47n1997_019:0802b12_1": "王老師脫規模。",
    "T47n1997_019:0802b12_2": "解向長安正鬧處。",
    "T47n1997_019:0802b13_3": "喚得悠悠陸大夫。",
    "T47n1997_019:0802b14_0": "舉。",
    "T47n1997_019:0802b14_1": "雲門示眾云。",
    "T47n1997_019:0802b14_2": "十五日已前則不問汝。",
    "T47n1997_019:0802b14_3": "十五日已後道將一句來。",
    "T47n1997_019:0802b15_4": "眾無對。",
    "T47n1997_019:0802b15_5": "自代云。",
    "T47n1997_019:0802b15_6": "日日是好日。",
    "T47n1997_019:0802b17_0": "破二作一分三成六。",
    "T47n1997_019:0802b17_1": "著串數珠數不足。",
    "T47n1997_019:0802b17_2": "南辰信手攀北斗。",
    "T47n1997_019:0802b18_3": "回身觸豁開戶牖。",
    "T47n1997_019:0802b18_4": "正當軒玉兔金烏。",
    "T47n1997_019:0802b19_5": "如轉燭傳不傳得不得。",
    "T47n1997_019:0802b19_6": "那知陌上春條綠。",
    "T47n1997_019:0802b21_0": "舉。",
    "T47n1997_019:0802b21_1": "僧問洞山。",
    "T47n1997_019:0802b21_2": "如何是佛。",
    "T47n1997_019:0802b21_3": "山云。",
    "T47n1997_019:0802b21_4": "麻三斤。",
    "T47n1997_019:0802b22_0": "鐘在扣谷受響。",
    "T47n1997_019:0802b22_1": "池印月鏡含像。",
    "T47n1997_019:0802b22_2": "曾非展事投機。",
    "T47n1997_019:0802b23_3": "豈是預搔待痒。",
    "T47n1997_019:0802b23_4": "點鐵成金舉直措枉。",
    "T47n1997_019:0802b23_5": "一箭鵰一雙。",
    "T47n1997_019:0802b24_6": "一摑血一掌。",
    "T47n1997_019:0802b24_7": "君不見疎而不漏兮恢恢天網。",
    "T47n1997_019:0802b26_0": "舉。",
    "T47n1997_019:0802b26_1": "雪峯示眾云。",
    "T47n1997_019:0802b26_2": "三世諸佛在火焰裏轉大法輪。",
    "T47n1997_019:0802b27_3": "玄沙云。",
    "T47n1997_019:0802b27_4": "火焰為三世諸佛說法。",
    "T47n1997_019:0802b27_5": "三世諸佛立地聽。",
    "T47n1997_019:0802b29_0": "將謂猴白更有猴黑。",
    "T47n1997_019:0802b29_1": "互換投機神出鬼沒。",
    "T47n1997_019:0802b29_2": "烈焰亘天佛說法。",
    "T47n1997_019:0802c01_3": "亘天烈焰法說佛。",
    "T47n1997_019:0802c01_4": "風前剪斷葛藤窠。",
    "T47n1997_019:0802c02_5": "一言勘破維摩詰。",
    "T47n1997_019:0802c03_0": "舉。",
    "T47n1997_019:0802c03_1": "東寺問仰山。",
    "T47n1997_019:0802c03_2": "甚處人。",
    "T47n1997_019:0802c03_3": "山云廣州。",
    "T47n1997_019:0802c03_4": "寺云。",
    "T47n1997_019:0802c03_5": "我聞廣州有鎮海明珠是否。",
    "T47n1997_019:0802c04_6": "山云是。",
    "T47n1997_019:0802c04_7": "寺云。",
    "T47n1997_019:0802c04_8": "作何顏色。",
    "T47n1997_019:0802c05_9": "山云。",
    "T47n1997_019:0802c05_10": "黑月則現。",
    "T47n1997_019:0802c05_11": "白月則隱。",
    "T47n1997_019:0802c05_12": "寺云。",
    "T47n1997_019:0802c05_13": "子還帶得來麼。",
    "T47n1997_019:0802c06_14": "山云。",
    "T47n1997_019:0802c06_15": "帶得來。",
    "T47n1997_019:0802c06_16": "寺云。",
    "T47n1997_019:0802c06_17": "何不呈似老僧。",
    "T47n1997_019:0802c07_18": "山云諾。",
    "T47n1997_019:0802c07_19": "惠寂昨到溈山。",
    "T47n1997_019:0802c07_20": "亦被索此珠。",
    "T47n1997_019:0802c07_21": "直得無言可對無理可伸。",
    "T47n1997_019:0802c08_22": "寺云。",
    "T47n1997_019:0802c08_23": "真師子兒大師子吼。",
    "T47n1997_019:0802c09_24": "善撫太阿鋏。",
    "T47n1997_019:0802c09_25": "決無傷手厄。",
    "T47n1997_019:0802c09_26": "慣編猛虎鬚。",
    "T47n1997_019:0802c09_27": "必有全身策。",
    "T47n1997_019:0802c10_28": "鎮海珠巧呈似。",
    "T47n1997_019:0802c10_29": "離色離聲離名字。",
    "T47n1997_019:0802c11_0": "栴檀林裏爇栴檀。",
    "T47n1997_019:0802c11_1": "師子窟中吼師子。",
    "T47n1997_019:0802c12_0": "舉。",
    "T47n1997_019:0802c12_1": "趙州示眾云。",
    "T47n1997_019:0802c12_2": "至道無難唯嫌揀擇。",
    "T47n1997_019:0802c12_3": "但莫憎愛洞然明白。",
    "T47n1997_019:0802c13_4": "纔有言語是揀擇是明白。",
    "T47n1997_019:0802c13_5": "老僧不在明白裏。",
    "T47n1997_019:0802c14_6": "汝等還護惜也無。",
    "T47n1997_019:0802c14_7": "僧問。",
    "T47n1997_019:0802c14_8": "既不在明白裏。",
    "T47n1997_019:0802c15_9": "未審護惜箇什麼。",
    "T47n1997_019:0802c15_10": "州云。",
    "T47n1997_019:0802c15_11": "我亦不知。",
    "T47n1997_019:0802c15_12": "僧云。",
    "T47n1997_019:0802c16_13": "和尚既不知。",
    "T47n1997_019:0802c16_14": "為什麼道不在明白裏。",
    "T47n1997_019:0802c16_15": "州云。",
    "T47n1997_019:0802c17_0": "問事則得。",
    "T47n1997_019:0802c17_1": "禮拜了退。",
    "T47n1997_019:0802c18_0": "至簡至易同天同地。",
    "T47n1997_019:0802c18_1": "揀擇明白云何護惜。",
    "T47n1997_019:0802c18_2": "口似錐眼似眉。",
    "T47n1997_019:0802c19_3": "涉語脈蚿憐夔。",
    "T47n1997_019:0802c19_4": "堪笑卞和三獻玉。",
    "T47n1997_019:0802c20_5": "縱榮刖却一雙足。",
    "T47n1997_019:0802c21_0": "舉。",
    "T47n1997_019:0802c21_1": "石頭示眾云。",
    "T47n1997_019:0802c21_2": "言語動用沒交涉。",
    "T47n1997_019:0802c21_3": "藥山云。",
    "T47n1997_019:0802c21_4": "非言語動用亦沒交涉。",
    "T47n1997_019:0802c22_5": "頭云。",
    "T47n1997_019:0802c22_6": "我這裏針剳不入。",
    "T47n1997_019:0802c23_0": "山云。",
    "T47n1997_019:0802c23_1": "我這裏如石上栽華。",
    "T47n1997_019:0802c24_0": "井底泥牛吼月。",
    "T47n1997_019:0802c24_1": "雲間木馬嘶風。",
    "T47n1997_019:0802c24_2": "把斷乾坤世界。",
    "T47n1997_019:0802c25_3": "誰分南北西東。",
    "T47n1997_019:0802c25_4": "直中曲曲中直。",
    "T47n1997_019:0802c25_5": "要平不平憑秤尺。",
    "T47n1997_019:0802c27_0": "舉。",
    "T47n1997_019:0802c27_1": "雪峯示眾云。",
    "T47n1997_019:0802c27_2": "望州亭與諸人相見了也。",
    "T47n1997_019:0802c27_3": "烏石嶺與諸人相見了也。",
    "T47n1997_019:0802c28_4": "僧堂前與諸人相見了也。",
    "T47n1997_019:0802c29_5": "後保福舉問鵝湖。",
    "T47n1997_019:0802c29_6": "僧堂前則且置。",
    "T47n1997_019:0802c29_7": "什麼處是望州亭烏石嶺相見。",
    "T47n1997_019:0803a01_8": "鵝湖驟步歸方丈。",
    "T47n1997_019:0803a02_0": "保福便入僧堂。",
    "T47n1997_019:0803a03_0": "藕線引鯨鼇。",
    "T47n1997_019:0803a03_1": "針鋒輥芥投。",
    "T47n1997_019:0803a03_2": "望州烏石嶺。",
    "T47n1997_019:0803a03_3": "未唱已先酬。",
    "T47n1997_019:0803a04_4": "大唐擊鼓新羅舞。",
    "T47n1997_019:0803a04_5": "覿面相呈不相覩。",
    "T47n1997_019:0803a06_0": "舉。",
    "T47n1997_019:0803a06_1": "代宗皇帝問忠國師。",
    "T47n1997_019:0803a06_2": "和尚百年後所須何物。",
    "T47n1997_019:0803a07_3": "國師云。",
    "T47n1997_019:0803a07_4": "要箇無縫塔子。",
    "T47n1997_019:0803a07_5": "帝云。",
    "T47n1997_019:0803a07_6": "請師塔樣。",
    "T47n1997_019:0803a08_0": "國師云。",
    "T47n1997_019:0803a08_1": "會麼。",
    "T47n1997_019:0803a08_2": "帝云不會。",
    "T47n1997_019:0803a08_3": "國師云。",
    "T47n1997_019:0803a08_4": "吾有付法弟子耽源。",
    "T47n1997_019:0803a09_5": "却諳此事。",
    "T47n1997_019:0803a09_6": "請詔問之。",
    "T47n1997_019:0803a09_7": "國師遷化後。",
    "T47n1997_019:0803a10_0": "帝召耽源。",
    "T47n1997_019:0803a10_1": "問此意如何。",
    "T47n1997_019:0803a10_2": "耽源呈頌云。",
    "T47n1997_019:0803a10_3": "湘之南潭之北。",
    "T47n1997_019:0803a11_4": "中有黃金充一國。",
    "T47n1997_019:0803a11_5": "無影樹下合同船。",
    "T47n1997_019:0803a12_0": "瑠璃殿上無知識。",
    "T47n1997_019:0803a13_0": "八面自玲瓏。",
    "T47n1997_019:0803a13_1": "盤空勢岌崿。",
    "T47n1997_019:0803a13_2": "表裏鎮巍然。",
    "T47n1997_019:0803a13_3": "若為分六鑿。",
    "T47n1997_019:0803a14_4": "執名匿相認影迷形。",
    "T47n1997_019:0803a14_5": "臥龍長怖碧潭清。",
    "T47n1997_019:0803a15_6": "合同船子開心椀。",
    "T47n1997_019:0803a15_7": "日用如何不現成。",
    "T47n1997_019:0803a16_0": "舉。",
    "T47n1997_019:0803a16_1": "石頭見藥山坐次問。",
    "T47n1997_019:0803a16_2": "爾在此作什麼。",
    "T47n1997_019:0803a16_3": "山云。",
    "T47n1997_019:0803a17_0": "一物不為。",
    "T47n1997_019:0803a17_1": "頭云。",
    "T47n1997_019:0803a17_2": "恁麼則閑坐也。",
    "T47n1997_019:0803a17_3": "山云。",
    "T47n1997_019:0803a17_4": "閑坐則為也。",
    "T47n1997_019:0803a18_5": "頭云。",
    "T47n1997_019:0803a18_6": "汝道不為。",
    "T47n1997_019:0803a18_7": "不為箇什麼。",
    "T47n1997_019:0803a18_8": "山云。",
    "T47n1997_019:0803a18_9": "千聖亦不識。",
    "T47n1997_019:0803a19_10": "石頭以頌讚之。",
    "T47n1997_019:0803a19_11": "從來共住不知名。",
    "T47n1997_019:0803a20_0": "任運相將只麼行。",
    "T47n1997_019:0803a20_1": "自古上賢猶不識。",
    "T47n1997_019:0803a20_2": "造次凡流豈可明。",
    "T47n1997_019:0803a22_0": "擺撥佛祖縛。",
    "T47n1997_019:0803a22_1": "曠然繩墨外。",
    "T47n1997_019:0803a22_2": "一物亦不為。",
    "T47n1997_019:0803a22_3": "縱橫得自在。",
    "T47n1997_019:0803a23_4": "古鑑臨臺明辨去來。",
    "T47n1997_019:0803a23_5": "金鎚影動鐵樹華開。",
    "T47n1997_019:0803a24_6": "任運相將不可陪。",
    "T47n1997_019:0803a24_7": "法雲隨處作風雷。",
    "T47n1997_019:0803a25_0": "舉。",
    "T47n1997_019:0803a25_1": "雲門示眾云。",
    "T47n1997_019:0803a25_2": "人人盡有光明在。",
    "T47n1997_019:0803a25_3": "看時不見暗昏昏。",
    "T47n1997_019:0803a26_4": "作麼生是光明。",
    "T47n1997_019:0803a26_5": "眾無對。",
    "T47n1997_019:0803a26_6": "自代云。",
    "T47n1997_019:0803a26_7": "僧堂佛殿厨庫三門。",
    "T47n1997_019:0803a28_0": "夜明簾外千峯秀。",
    "T47n1997_019:0803a28_1": "鸞鏡臺前萬象虛。",
    "T47n1997_019:0803a28_2": "掃蹤滅跡不立錙銖。",
    "T47n1997_019:0803a29_3": "唯為佛殿唯是香厨。",
    "T47n1997_019:0803a29_4": "敲出鳳凰五色髓。",
    "T47n1997_019:0803b01_5": "擊碎驪龍明月珠。",
    "T47n1997_019:0803b02_0": "舉。",
    "T47n1997_019:0803b02_1": "世尊生下周行七步目顧四方。",
    "T47n1997_019:0803b02_2": "一手指天一手指地。",
    "T47n1997_019:0803b03_3": "自云。",
    "T47n1997_019:0803b03_4": "天上天下惟我獨尊。",
    "T47n1997_019:0803b04_0": "右脇誕金軀。",
    "T47n1997_019:0803b04_1": "九龍噴香水。",
    "T47n1997_019:0803b04_2": "嶷嶷步四方。",
    "T47n1997_019:0803b04_3": "周匝蓮華起。",
    "T47n1997_019:0803b05_4": "末上先施第一機。",
    "T47n1997_019:0803b05_5": "高風亘古鎮巍巍。",
    "T47n1997_019:0803b06_0": "當時有箇承當得。",
    "T47n1997_019:0803b06_1": "等閑擒下白拈賊。",
    "T47n1997_019:0803b06_2": "咦。",
    "T47n1997_019:0803b07_0": "舉。",
    "T47n1997_019:0803b07_1": "雪峯住庵有二僧到。",
    "T47n1997_019:0803b07_2": "峯見以手托庵門放身出云。",
    "T47n1997_019:0803b08_3": "是什麼。",
    "T47n1997_019:0803b08_4": "僧亦云。",
    "T47n1997_019:0803b08_5": "是什麼。",
    "T47n1997_019:0803b08_6": "峯低頭歸庵。",
    "T47n1997_019:0803b09_7": "其僧後至巖頭。",
    "T47n1997_019:0803b09_8": "頭問云。",
    "T47n1997_019:0803b09_9": "雪老有何言句。",
    "T47n1997_019:0803b09_10": "僧舉前話。",
    "T47n1997_019:0803b10_11": "頭云。",
    "T47n1997_019:0803b10_12": "雪峯道什麼。",
    "T47n1997_019:0803b10_13": "僧云。",
    "T47n1997_019:0803b10_14": "雪峯無語。",
    "T47n1997_019:0803b11_0": "頭云。",
    "T47n1997_019:0803b11_1": "噫我悔不當初向伊道有箇末後句。",
    "T47n1997_019:0803b11_2": "我若向伊道。",
    "T47n1997_019:0803b12_3": "已後天下人不奈雪老何。",
    "T47n1997_019:0803b12_4": "僧至夏末舉此話請益。",
    "T47n1997_019:0803b13_5": "頭云。",
    "T47n1997_019:0803b13_6": "汝何不早問。",
    "T47n1997_019:0803b13_7": "僧云。",
    "T47n1997_019:0803b13_8": "不敢造次。",
    "T47n1997_019:0803b14_9": "頭云。",
    "T47n1997_019:0803b14_10": "我雖與雪峯同條生。",
    "T47n1997_019:0803b14_11": "不與雪峯同條死。",
    "T47n1997_019:0803b15_12": "要識末後句。",
    "T47n1997_019:0803b15_13": "只這是。",
    "T47n1997_019:0803b16_0": "雙明復雙暗。",
    "T47n1997_019:0803b16_1": "獨立絕殊方。",
    "T47n1997_019:0803b16_2": "乘機直面提。",
    "T47n1997_019:0803b16_3": "其鋒安可當。",
    "T47n1997_019:0803b17_4": "同條生兩鏡相照無能名。",
    "T47n1997_019:0803b17_5": "不同條死鐵樹華開亘今古。",
    "T47n1997_019:0803b18_6": "末後句始牢關。",
    "T47n1997_019:0803b18_7": "拈却門前大案山。",
    "T47n1997_019:0803b20_0": "舉。",
    "T47n1997_019:0803b20_1": "天平從猗和尚。",
    "T47n1997_019:0803b20_2": "行脚在西院。",
    "T47n1997_019:0803b20_3": "常云。",
    "T47n1997_019:0803b20_4": "今時莫道會佛法。",
    "T47n1997_019:0803b21_5": "只覓箇舉話底人也難得。",
    "T47n1997_019:0803b21_6": "一日從西院法堂下過。",
    "T47n1997_019:0803b22_7": "西院高聲喚從猗。",
    "T47n1997_019:0803b22_8": "平舉首。",
    "T47n1997_019:0803b22_9": "院云錯。",
    "T47n1997_019:0803b23_10": "行三兩步。",
    "T47n1997_019:0803b23_11": "院又云錯。",
    "T47n1997_019:0803b23_12": "院云。",
    "T47n1997_019:0803b23_13": "適來兩錯。",
    "T47n1997_019:0803b24_0": "是老僧錯是上座錯。",
    "T47n1997_019:0803b24_1": "平云。",
    "T47n1997_019:0803b24_2": "是從猗錯。",
    "T47n1997_019:0803b24_3": "西院云。",
    "T47n1997_019:0803b25_0": "錯錯。",
    "T47n1997_019:0803b25_1": "少頃西院云。",
    "T47n1997_019:0803b25_2": "上座且在此度夏。",
    "T47n1997_019:0803b25_3": "待與爾商量這兩錯。",
    "T47n1997_019:0803b26_4": "平當時便去。",
    "T47n1997_019:0803b26_5": "後住天平示眾云。",
    "T47n1997_019:0803b27_0": "老僧當年行脚。",
    "T47n1997_019:0803b27_1": "被業風吹到汝州西院。",
    "T47n1997_019:0803b27_2": "有箇思明長老。",
    "T47n1997_019:0803b28_3": "勘我兩錯更待留我過夏待共我商量。",
    "T47n1997_019:0803b29_4": "我不道恁麼時錯。",
    "T47n1997_019:0803b29_5": "我未發足南方行脚時。",
    "T47n1997_019:0803c01_6": "早知道錯了也。",
    "T47n1997_019:0803c02_0": "把纜放船膠柱調絃。",
    "T47n1997_019:0803c02_1": "遠水不救近火。",
    "T47n1997_019:0803c02_2": "短綆那汲深泉。",
    "T47n1997_019:0803c03_3": "天平老大怱草。",
    "T47n1997_019:0803c03_4": "為兩錯悔行脚。",
    "T47n1997_019:0803c03_5": "大地茫茫愁殺人。",
    "T47n1997_019:0803c04_6": "眼裏無筋一世貧。",
    "T47n1997_019:0803c05_0": "舉。",
    "T47n1997_019:0803c05_1": "踈山平日在香嚴。",
    "T47n1997_019:0803c05_2": "一日嚴上堂。",
    "T47n1997_019:0803c05_3": "有僧問。",
    "T47n1997_019:0803c05_4": "不慕諸聖不重己靈時如何。",
    "T47n1997_019:0803c06_5": "嚴云。",
    "T47n1997_019:0803c06_6": "萬機休罷千聖不携。",
    "T47n1997_019:0803c07_7": "疎山作嘔吐勢。",
    "T47n1997_019:0803c07_8": "嚴云。",
    "T47n1997_019:0803c07_9": "師叔不肯那。",
    "T47n1997_019:0803c07_10": "山云。",
    "T47n1997_019:0803c08_11": "不得無過。",
    "T47n1997_019:0803c08_12": "嚴云。",
    "T47n1997_019:0803c08_13": "過在甚處。",
    "T47n1997_019:0803c08_14": "山云萬機休罷猶有物在。",
    "T47n1997_019:0803c09_15": "千聖不携亦從人得。",
    "T47n1997_019:0803c09_16": "嚴云。",
    "T47n1997_019:0803c09_17": "師叔莫道得麼。",
    "T47n1997_019:0803c10_18": "山云。",
    "T47n1997_019:0803c10_19": "還我法座與爾道。",
    "T47n1997_019:0803c10_20": "於是嚴令陞座。",
    "T47n1997_019:0803c11_21": "如前問之。",
    "T47n1997_019:0803c11_22": "山云。",
    "T47n1997_019:0803c11_23": "何不道肯諾不得全。",
    "T47n1997_019:0803c11_24": "嚴云。",
    "T47n1997_019:0803c12_25": "肯又肯箇什麼。",
    "T47n1997_019:0803c12_26": "諾又諾箇什麼。",
    "T47n1997_019:0803c12_27": "山云。",
    "T47n1997_019:0803c12_28": "肯則肯他諸聖。",
    "T47n1997_019:0803c13_29": "諾則諾於己靈。",
    "T47n1997_019:0803c13_30": "香嚴云。",
    "T47n1997_019:0803c13_31": "師叔恁麼道也。",
    "T47n1997_019:0803c14_32": "須倒屙三十年始得。",
    "T47n1997_019:0803c14_33": "後住疎山常病返胃。",
    "T47n1997_019:0803c15_34": "一日舉此問鏡清。",
    "T47n1997_019:0803c15_35": "病僧肯諾不得全道者。",
    "T47n1997_019:0803c16_0": "作麼生會。",
    "T47n1997_019:0803c16_1": "清云。",
    "T47n1997_019:0803c16_2": "全歸肯諾。",
    "T47n1997_019:0803c16_3": "山云。",
    "T47n1997_019:0803c16_4": "不得全又作麼生。",
    "T47n1997_019:0803c17_5": "清云。",
    "T47n1997_019:0803c17_6": "箇中無肯路。",
    "T47n1997_019:0803c17_7": "山云。",
    "T47n1997_019:0803c17_8": "始契病僧意。",
    "T47n1997_019:0803c19_0": "刀不自割指不自觸。",
    "T47n1997_019:0803c19_1": "鵠白烏玄松直棘曲。",
    "T47n1997_019:0803c19_2": "纔有纖塵帶影來。",
    "T47n1997_019:0803c20_3": "脫體全拋無眹迹。",
    "T47n1997_019:0803c20_4": "肯不存諾不立。",
    "T47n1997_019:0803c21_5": "一片清光射斗牛。",
    "T47n1997_019:0803c21_6": "天上人間得自由。",
    "T47n1997_019:0803c22_0": "舉。",
    "T47n1997_019:0803c22_1": "趙州問南泉。",
    "T47n1997_019:0803c22_2": "如何是道。",
    "T47n1997_019:0803c22_3": "泉云。",
    "T47n1997_019:0803c22_4": "平常心是道。",
    "T47n1997_019:0803c23_5": "州云。",
    "T47n1997_019:0803c23_6": "還許趣向也無。",
    "T47n1997_019:0803c23_7": "泉云。",
    "T47n1997_019:0803c23_8": "擬向即乖。",
    "T47n1997_019:0803c23_9": "趙州云。",
    "T47n1997_019:0803c24_10": "不擬安知是道。",
    "T47n1997_019:0803c24_11": "泉云。",
    "T47n1997_019:0803c24_12": "道不屬知不屬不知。",
    "T47n1997_019:0803c25_13": "知是妄覺不知是無記。",
    "T47n1997_019:0803c25_14": "若直達不疑之道。",
    "T47n1997_019:0803c26_0": "廓同太虛。",
    "T47n1997_019:0803c26_1": "豈可強是非耶。",
    "T47n1997_019:0803c26_2": "州於言下大悟。",
    "T47n1997_019:0803c27_0": "遇飯喫飯遇茶喫茶。",
    "T47n1997_019:0803c27_1": "千重百匝四海一家。",
    "T47n1997_019:0803c27_2": "解却黏去却縛。",
    "T47n1997_019:0803c28_3": "言無言作無作。",
    "T47n1997_019:0803c28_4": "廓然本體等虛空。",
    "T47n1997_019:0803c29_5": "風從虎兮雲從龍。",
    "T47n1997_019:0804a01_0": "舉。",
    "T47n1997_019:0804a01_1": "百丈每至陞座。",
    "T47n1997_019:0804a01_2": "常有一老人聽法。",
    "T47n1997_019:0804a01_3": "一日眾去老人獨留。",
    "T47n1997_019:0804a02_4": "丈云。",
    "T47n1997_019:0804a02_5": "汝是何人。",
    "T47n1997_019:0804a02_6": "老人云。",
    "T47n1997_019:0804a02_7": "某非人。",
    "T47n1997_019:0804a03_8": "然某緣五百生前迦葉佛時曾住此山。",
    "T47n1997_019:0804a03_9": "錯答學人一轉語。",
    "T47n1997_019:0804a04_10": "所以五百世墮野狐身。",
    "T47n1997_019:0804a04_11": "今欲舉此話。",
    "T47n1997_019:0804a05_12": "請和尚為答。",
    "T47n1997_019:0804a05_13": "丈云。",
    "T47n1997_019:0804a05_14": "汝試舉看。",
    "T47n1997_019:0804a05_15": "老人云大修行底人還落因果也無。",
    "T47n1997_019:0804a06_16": "某對云。",
    "T47n1997_019:0804a06_17": "不落因果。",
    "T47n1997_019:0804a07_18": "丈云。",
    "T47n1997_019:0804a07_19": "汝問我與汝道。",
    "T47n1997_019:0804a07_20": "老人遂問。",
    "T47n1997_019:0804a07_21": "大修行底人還落因果也無。",
    "T47n1997_019:0804a08_22": "丈云。",
    "T47n1997_019:0804a08_23": "不昧因果。",
    "T47n1997_019:0804a08_24": "老人遂悟。",
    "T47n1997_019:0804a09_25": "得脫野狐身化去。",
    "T47n1997_019:0804a10_0": "魚行水濁鳥飛毛落。",
    "T47n1997_019:0804a10_1": "至鑑難逃太虛寥廓。",
    "T47n1997_019:0804a10_2": "一往迢迢五百生。",
    "T47n1997_019:0804a11_3": "只緣因果大修行。",
    "T47n1997_019:0804a11_4": "疾雷破山風振海。",
    "T47n1997_019:0804a12_5": "百煉精金色不改。",
    "T47n1997_019:0804a13_0": "舉。",
    "T47n1997_019:0804a13_1": "風穴在郢州衙內。",
    "T47n1997_019:0804a13_2": "陞座示眾云。",
    "T47n1997_019:0804a13_3": "祖師心印。",
    "T47n1997_019:0804a14_0": "狀似鐵牛之機。",
    "T47n1997_019:0804a14_1": "去即印住。",
    "T47n1997_019:0804a14_2": "住即印破。",
    "T47n1997_019:0804a14_3": "只如不去不住。",
    "T47n1997_019:0804a15_4": "且道印即是不印則是。",
    "T47n1997_019:0804a15_5": "時有盧陂長老出問。",
    "T47n1997_019:0804a16_6": "某甲有鐵牛之機。",
    "T47n1997_019:0804a16_7": "請師不搭印。",
    "T47n1997_019:0804a16_8": "穴云。",
    "T47n1997_019:0804a17_0": "慣釣鯨鯢沈巨浸。",
    "T47n1997_019:0804a17_1": "却將蛙步輾泥沙。",
    "T47n1997_019:0804a17_2": "陂佇思。",
    "T47n1997_019:0804a18_0": "穴便喝云。",
    "T47n1997_019:0804a18_1": "長老何不進語。",
    "T47n1997_019:0804a18_2": "陂擬議。",
    "T47n1997_019:0804a18_3": "穴打一拂子云。",
    "T47n1997_019:0804a19_4": "長老還記得話頭麼。",
    "T47n1997_019:0804a19_5": "試舉看。",
    "T47n1997_019:0804a19_6": "陂擬開口。",
    "T47n1997_019:0804a20_0": "穴又打一拂子。",
    "T47n1997_019:0804a20_1": "牧主云。",
    "T47n1997_019:0804a20_2": "將知佛法與王法一般。",
    "T47n1997_019:0804a21_3": "穴云。",
    "T47n1997_019:0804a21_4": "見箇什麼道理。",
    "T47n1997_019:0804a21_5": "牧主云。",
    "T47n1997_019:0804a21_6": "當斷不斷返招其亂。",
    "T47n1997_019:0804a22_7": "穴便下座。",
    "T47n1997_019:0804a23_0": "列聖風規初不放過。",
    "T47n1997_019:0804a23_1": "擬跨鐵牛驀頭印破。",
    "T47n1997_019:0804a23_2": "盧陂當斷却沈吟。",
    "T47n1997_019:0804a24_3": "電轉星飛活被擒。",
    "T47n1997_019:0804a24_4": "喝下攙撑同霹靂。",
    "T47n1997_019:0804a25_5": "三玄戈甲振叢林。",
    "T47n1997_019:0804a26_0": "舉。",
    "T47n1997_019:0804a26_1": "僧問洞山。",
    "T47n1997_019:0804a26_2": "寒暑到來如何回避。",
    "T47n1997_019:0804a26_3": "山云。",
    "T47n1997_019:0804a26_4": "何不向無寒暑處回避。",
    "T47n1997_019:0804a27_5": "僧云。",
    "T47n1997_019:0804a27_6": "如何是無寒暑處。",
    "T47n1997_019:0804a27_7": "山云。",
    "T47n1997_019:0804a28_8": "寒時寒殺闍梨。",
    "T47n1997_019:0804a28_9": "熱時熱殺闍梨。",
    "T47n1997_019:0804a29_0": "盤走珠珠走盤。",
    "T47n1997_019:0804a29_1": "偏中正正中偏。",
    "T47n1997_019:0804a29_2": "羚羊掛角無蹤跡。",
    "T47n1997_019:0804b01_3": "獵犬遶林空踧踖。",
    "T47n1997_019:0804b02_0": "舉。",
    "T47n1997_019:0804b02_1": "金牛每至食時。",
    "T47n1997_019:0804b02_2": "自携飯至僧堂前。",
    "T47n1997_019:0804b02_3": "撫掌呵呵大笑云。",
    "T47n1997_019:0804b03_4": "菩薩子喫飯來喫飯來。",
    "T47n1997_019:0804b03_5": "後僧問長慶。",
    "T47n1997_019:0804b04_6": "意旨如何。",
    "T47n1997_019:0804b04_7": "云大似因齋慶贊。",
    "T47n1997_019:0804b04_8": "僧問大光。",
    "T47n1997_019:0804b04_9": "未審慶贊箇甚麼。",
    "T47n1997_019:0804b05_10": "光作舞。",
    "T47n1997_019:0804b05_11": "僧禮拜。",
    "T47n1997_019:0804b05_12": "光云。",
    "T47n1997_019:0804b05_13": "爾作麼生會。",
    "T47n1997_019:0804b06_14": "僧亦作舞。",
    "T47n1997_019:0804b06_15": "光云。",
    "T47n1997_019:0804b06_16": "這野狐精。",
    "T47n1997_019:0804b07_0": "絲來線去分明過與。",
    "T47n1997_019:0804b07_1": "若不相諳如何驗取。",
    "T47n1997_019:0804b07_2": "因齋慶贊和泥土。",
    "T47n1997_019:0804b08_3": "蹈襲只言呈作舞。",
    "T47n1997_019:0804b08_4": "野狐精七星。",
    "T47n1997_019:0804b09_5": "利劍血長鯨。",
    "T47n1997_019:0804b10_0": "舉。",
    "T47n1997_019:0804b10_1": "疎山示眾云。",
    "T47n1997_019:0804b10_2": "病僧咸通年已前會法身邊事。",
    "T47n1997_019:0804b11_3": "咸通年已後會法身向上事。",
    "T47n1997_019:0804b11_4": "雲門出問云。",
    "T47n1997_019:0804b12_0": "如何是法身邊事。",
    "T47n1997_019:0804b12_1": "山云。",
    "T47n1997_019:0804b12_2": "枯樁。",
    "T47n1997_019:0804b12_3": "如何是法身向上事。",
    "T47n1997_019:0804b13_4": "山云。",
    "T47n1997_019:0804b13_5": "非枯樁。",
    "T47n1997_019:0804b13_6": "門云。",
    "T47n1997_019:0804b13_7": "還許學人說道理也無。",
    "T47n1997_019:0804b14_8": "山云許。",
    "T47n1997_019:0804b14_9": "門云。",
    "T47n1997_019:0804b14_10": "只如枯樁豈不是明法身邊事。",
    "T47n1997_019:0804b15_11": "山云是。",
    "T47n1997_019:0804b15_12": "門云。",
    "T47n1997_019:0804b15_13": "非枯樁豈不是明法身向上事。",
    "T47n1997_019:0804b16_14": "山云是。",
    "T47n1997_019:0804b16_15": "門云。",
    "T47n1997_019:0804b16_16": "未審法身還該一切也無。",
    "T47n1997_019:0804b16_17": "山云。",
    "T47n1997_019:0804b17_18": "法身周遍爭得不該。",
    "T47n1997_019:0804b17_19": "門指淨瓶云。",
    "T47n1997_019:0804b17_20": "還有法身也無。",
    "T47n1997_019:0804b18_21": "山云。",
    "T47n1997_019:0804b18_22": "莫向淨瓶邊覓。",
    "T47n1997_019:0804b18_23": "門云諾諾。",
    "T47n1997_019:0804b19_0": "眼觀東南意在西北。",
    "T47n1997_019:0804b19_1": "撥轉天關掀翻地軸。",
    "T47n1997_019:0804b19_2": "法身向上法身邊。",
    "T47n1997_019:0804b20_3": "間氣英靈五百年。",
    "T47n1997_019:0804b20_4": "膠漆相投箭相拄。",
    "T47n1997_019:0804b21_5": "南山起雲北山雨。",
    "T47n1997_019:0804b22_0": "舉。",
    "T47n1997_019:0804b22_1": "臺山路上有一婆子。",
    "T47n1997_019:0804b22_2": "僧問。",
    "T47n1997_019:0804b22_3": "臺山路向甚處去。",
    "T47n1997_019:0804b23_4": "婆云。",
    "T47n1997_019:0804b23_5": "驀直去。",
    "T47n1997_019:0804b23_6": "僧纔行。",
    "T47n1997_019:0804b23_7": "婆云。",
    "T47n1997_019:0804b23_8": "好箇阿師便恁麼去。",
    "T47n1997_019:0804b24_9": "前後僧問皆如此。",
    "T47n1997_019:0804b24_10": "後有僧舉似趙州。",
    "T47n1997_019:0804b25_0": "州云。",
    "T47n1997_019:0804b25_1": "待我為爾勘破這老婆。",
    "T47n1997_019:0804b25_2": "遂往問。",
    "T47n1997_019:0804b25_3": "臺山路向甚處去。",
    "T47n1997_019:0804b26_4": "婆云。",
    "T47n1997_019:0804b26_5": "驀直去。",
    "T47n1997_019:0804b26_6": "州纔行。",
    "T47n1997_019:0804b26_7": "婆云。",
    "T47n1997_019:0804b26_8": "好箇阿師又恁麼去。",
    "T47n1997_019:0804b27_9": "州歸舉似大眾云。",
    "T47n1997_019:0804b27_10": "我為爾勘破這婆了也。",
    "T47n1997_019:0804b28_11": "老宿拈云。",
    "T47n1997_019:0804b28_12": "什麼處是勘破處。",
    "T47n1997_019:0804b29_0": "善繫無繩約。",
    "T47n1997_019:0804b29_1": "善行無轍跡。",
    "T47n1997_019:0804b29_2": "不戰屈人兵。",
    "T47n1997_019:0804b29_3": "直面當機疾。",
    "T47n1997_019:0804c01_4": "老婆勘破五臺山。",
    "T47n1997_019:0804c01_5": "有誰參透趙州關。",
    "T47n1997_019:0804c03_0": "舉。",
    "T47n1997_019:0804c03_1": "雲門示眾云。",
    "T47n1997_019:0804c03_2": "聞聲悟道見色明心。",
    "T47n1997_019:0804c03_3": "作麼生是聞聲悟道見色明心。",
    "T47n1997_019:0804c04_4": "舉手云。",
    "T47n1997_019:0804c04_5": "觀世音菩薩將錢來買胡餅。",
    "T47n1997_019:0804c05_6": "放下手元來却是饅頭。",
    "T47n1997_019:0804c06_0": "見色心先現。",
    "T47n1997_019:0804c06_1": "聞聲道已彰。",
    "T47n1997_019:0804c06_2": "掣電光中分皂白。",
    "T47n1997_019:0804c07_0": "海潮音裏別宮商。",
    "T47n1997_019:0804c07_1": "韶陽老慈門普。",
    "T47n1997_019:0804c07_2": "發機直用千鈞弩。",
    "T47n1997_019:0804c09_0": "舉。",
    "T47n1997_019:0804c09_1": "鏡清問僧。",
    "T47n1997_019:0804c09_2": "門外什麼聲。",
    "T47n1997_019:0804c09_3": "僧云。",
    "T47n1997_019:0804c09_4": "雨滴聲。",
    "T47n1997_019:0804c09_5": "清云。",
    "T47n1997_019:0804c10_6": "眾生顛倒迷己逐物。",
    "T47n1997_019:0804c10_7": "僧云。",
    "T47n1997_019:0804c10_8": "和尚作麼生。",
    "T47n1997_019:0804c10_9": "清云。",
    "T47n1997_019:0804c11_10": "洎不迷己。",
    "T47n1997_019:0804c11_11": "僧云。",
    "T47n1997_019:0804c11_12": "意旨如何。",
    "T47n1997_019:0804c11_13": "清云。",
    "T47n1997_019:0804c11_14": "出身猶可易。",
    "T47n1997_019:0804c12_15": "脫體道應難。",
    "T47n1997_019:0804c13_0": "順流逆流轉物物轉。",
    "T47n1997_019:0804c13_1": "良哉觀音快逢其便。",
    "T47n1997_019:0804c13_2": "出身脫體句分明。",
    "T47n1997_019:0804c14_3": "門外依前雨滴聲。",
    "T47n1997_019:0804c15_0": "舉。",
    "T47n1997_019:0804c15_1": "南泉示眾云。",
    "T47n1997_019:0804c15_2": "昨夜文殊普賢起佛見法見。",
    "T47n1997_019:0804c16_0": "每人與二十棒。",
    "T47n1997_019:0804c16_1": "貶向二鐵圍山去也。",
    "T47n1997_019:0804c16_2": "趙州出云。",
    "T47n1997_019:0804c17_3": "和尚棒教唯喫。",
    "T47n1997_019:0804c17_4": "泉云。",
    "T47n1997_019:0804c17_5": "王老師有什麼過。",
    "T47n1997_019:0804c17_6": "州禮拜。",
    "T47n1997_019:0804c18_7": "泉下座歸方丈。",
    "T47n1997_019:0804c19_0": "霧起龍吟風生虎嘯。",
    "T47n1997_019:0804c19_1": "兩口一舌異音同調。",
    "T47n1997_019:0804c19_2": "文殊普賢佛法見。",
    "T47n1997_019:0804c20_3": "南泉趙州日月面。",
    "T47n1997_019:0804c20_4": "據令而行指顧間。",
    "T47n1997_019:0804c21_5": "盡情貶向鐵圍山。",
    "T47n1997_019:0804c21_6": "忽有箇不憤底出來道崇寧[口*爾]。",
    "T47n1997_019:0804c22_7": "只向他道果然果然。",
    "T47n1997_019:0804c23_0": "舉。",
    "T47n1997_019:0804c23_1": "雪峯問僧。",
    "T47n1997_019:0804c23_2": "近離甚處。",
    "T47n1997_019:0804c23_3": "僧云覆船。",
    "T47n1997_019:0804c23_4": "峯云。",
    "T47n1997_019:0804c23_5": "生死海未渡。",
    "T47n1997_019:0804c24_6": "為什麼覆却船。",
    "T47n1997_019:0804c24_7": "僧無語。",
    "T47n1997_019:0804c24_8": "覆船代云。",
    "T47n1997_019:0804c25_0": "渠無生死。",
    "T47n1997_019:0804c25_1": "雪竇代云。",
    "T47n1997_019:0804c25_2": "久響雪峯。",
    "T47n1997_019:0804c26_0": "未渡生死海。",
    "T47n1997_019:0804c26_1": "不應覆却船。",
    "T47n1997_019:0804c26_2": "渠本無生死。",
    "T47n1997_019:0804c26_3": "超然離二邊。",
    "T47n1997_019:0804c27_4": "長如杲日麗中天。",
    "T47n1997_019:0804c27_5": "舒光照到雪峯前。",
    "T47n1997_019:0804c29_0": "舉。",
    "T47n1997_019:0804c29_1": "僧問雲門。",
    "T47n1997_019:0804c29_2": "如何是一氏時教。",
    "T47n1997_019:0804c29_3": "門云。",
    "T47n1997_019:0804c29_4": "對一說。",
    "T47n1997_019:0805a02_0": "海藏龍宮金文玉牒。",
    "T47n1997_019:0805a02_1": "逗器觀機破關擊節。",
    "T47n1997_019:0805a02_2": "三百餘會振綱宗。",
    "T47n1997_019:0805a03_3": "四十九年同箇舌。",
    "T47n1997_019:0805a03_4": "阿剌剌對一說。",
    "T47n1997_019:0805a04_5": "諦當之言如截鐵。",
    "T47n1997_019:0805a05_0": "舉。",
    "T47n1997_019:0805a05_1": "僧問雲門。",
    "T47n1997_019:0805a05_2": "不是目前機亦非目前事時如何。",
    "T47n1997_019:0805a06_3": "門云。",
    "T47n1997_019:0805a06_4": "倒一說。",
    "T47n1997_019:0805a07_0": "是賊識賊以楔出楔。",
    "T47n1997_019:0805a07_1": "鳥跡空雲鏡象水月。",
    "T47n1997_019:0805a07_2": "教兒師子迷蹤訣。",
    "T47n1997_019:0805a08_3": "上樹老猫安身法。",
    "T47n1997_019:0805a08_4": "活鱍鱍倒一說。",
    "T47n1997_019:0805a09_5": "等閑翻却狐狸穴。",
    "T47n1997_019:0805a10_0": "舉。",
    "T47n1997_019:0805a10_1": "世尊於一處九旬安居。",
    "T47n1997_019:0805a10_2": "至自恣日文殊倏來。",
    "T47n1997_019:0805a11_3": "迦葉問。",
    "T47n1997_019:0805a11_4": "今夏在何處安居。",
    "T47n1997_019:0805a11_5": "文殊云。",
    "T47n1997_019:0805a11_6": "在三處安居。",
    "T47n1997_019:0805a12_7": "迦葉於是白眾欲擯文殊出。",
    "T47n1997_019:0805a12_8": "纔舉犍槌。",
    "T47n1997_019:0805a13_0": "乃見無量佛剎。",
    "T47n1997_019:0805a13_1": "一一佛所有一一文殊一一迦葉。",
    "T47n1997_019:0805a14_2": "舉槌欲擯之。",
    "T47n1997_019:0805a14_3": "世尊於是告迦葉云。",
    "T47n1997_019:0805a14_4": "汝今欲擯出那箇文殊。",
    "T47n1997_019:0805a16_0": "大象不遊兔徑。",
    "T47n1997_019:0805a16_1": "燕雀安知鴻鵠。",
    "T47n1997_019:0805a16_2": "據令宛若成風。",
    "T47n1997_019:0805a17_3": "破的渾如齧鏃。",
    "T47n1997_019:0805a17_4": "遍界是文殊。",
    "T47n1997_019:0805a17_5": "遍界是迦葉。",
    "T47n1997_019:0805a18_0": "相對各儼然。",
    "T47n1997_019:0805a18_1": "舉槌何處罰好一劄。",
    "T47n1997_019:0805a18_2": "金色頭陀曾落節。",
    "T47n1997_019:0805a20_0": "舉。",
    "T47n1997_019:0805a20_1": "巖頭示眾云。",
    "T47n1997_019:0805a20_2": "涅槃經道。",
    "T47n1997_019:0805a20_3": "吾教意如塗毒鼓。",
    "T47n1997_019:0805a21_0": "擊著遠近聞者皆喪。",
    "T47n1997_019:0805a21_1": "僧問。",
    "T47n1997_019:0805a21_2": "如何是塗毒鼓。",
    "T47n1997_019:0805a21_3": "頭亞身云。",
    "T47n1997_019:0805a22_4": "韓信臨朝底。",
    "T47n1997_019:0805a23_0": "天高地厚水闊山遙。",
    "T47n1997_019:0805a23_1": "蕭何制律韓信臨朝。",
    "T47n1997_019:0805a23_2": "塗毒鼓未擊已前宜薦取。",
    "T47n1997_019:0805a25_0": "舉。",
    "T47n1997_019:0805a25_1": "文殊問庵提遮女。",
    "T47n1997_019:0805a25_2": "生以何為義。",
    "T47n1997_019:0805a25_3": "女云。",
    "T47n1997_019:0805a25_4": "生以不生生為生義。",
    "T47n1997_019:0805a26_5": "殊云。",
    "T47n1997_019:0805a26_6": "如何是生以不生生為生義。",
    "T47n1997_019:0805a27_7": "女云。",
    "T47n1997_019:0805a27_8": "若能明知地水火風四緣。",
    "T47n1997_019:0805a27_9": "未曾自得有所和合。",
    "T47n1997_019:0805a28_10": "而能隨其所宜。",
    "T47n1997_019:0805a28_11": "以為生義。",
    "T47n1997_019:0805a28_12": "殊云。",
    "T47n1997_019:0805a29_13": "死以何為義。",
    "T47n1997_019:0805a29_14": "女云。",
    "T47n1997_019:0805a29_15": "死以不死死為死義。",
    "T47n1997_019:0805b01_0": "殊云。",
    "T47n1997_019:0805b01_1": "如何是死以不死死為死義。",
    "T47n1997_019:0805b01_2": "女云。",
    "T47n1997_019:0805b01_3": "若能明知地水火風四緣。",
    "T47n1997_019:0805b02_4": "未曾自得有所離散。",
    "T47n1997_019:0805b02_5": "而能隨其所宜。",
    "T47n1997_019:0805b03_6": "以為死義。",
    "T47n1997_019:0805b04_0": "生以不生生。",
    "T47n1997_019:0805b04_1": "死以不死死。",
    "T47n1997_019:0805b04_2": "根本豁然明。",
    "T47n1997_019:0805b04_3": "應時超佛祖。",
    "T47n1997_019:0805b05_4": "隨宜離散與和合。",
    "T47n1997_019:0805b05_5": "十字縱橫活鱍鱍。",
    "T47n1997_019:0805b06_0": "金剛寶劍倚天寒。",
    "T47n1997_019:0805b06_1": "外道天魔皆膽慴。",
    "T47n1997_019:0805b07_0": "舉。",
    "T47n1997_019:0805b07_1": "溈山問仰山云。",
    "T47n1997_019:0805b07_2": "天寒人寒。",
    "T47n1997_019:0805b07_3": "仰山云。",
    "T47n1997_019:0805b07_4": "大家在這裏。",
    "T47n1997_019:0805b08_5": "溈山云。",
    "T47n1997_019:0805b08_6": "何不直說。",
    "T47n1997_019:0805b08_7": "仰山云。",
    "T47n1997_019:0805b08_8": "適來也不曲和尚如何。",
    "T47n1997_019:0805b09_9": "溈山云。",
    "T47n1997_019:0805b09_10": "且須隨流。",
    "T47n1997_019:0805b10_0": "北風逞嚴威。",
    "T47n1997_019:0805b10_1": "凜凜侵肌骨。",
    "T47n1997_019:0805b10_2": "一句括人天。",
    "T47n1997_019:0805b10_3": "幾曾容眹迹。",
    "T47n1997_019:0805b11_4": "隨流認得本來身。",
    "T47n1997_019:0805b11_5": "遍界莫非無價珍。",
    "T47n1997_019:0805b13_0": "舉。",
    "T47n1997_019:0805b13_1": "歸宗示眾云。",
    "T47n1997_019:0805b13_2": "吾今欲說禪。",
    "T47n1997_019:0805b13_3": "諸子總近前。",
    "T47n1997_019:0805b13_4": "大眾進前。",
    "T47n1997_019:0805b14_5": "宗云。",
    "T47n1997_019:0805b14_6": "汝聽觀音行。",
    "T47n1997_019:0805b14_7": "善應諸方所。",
    "T47n1997_019:0805b14_8": "僧問。",
    "T47n1997_019:0805b15_9": "如何是觀音行。",
    "T47n1997_019:0805b15_10": "宗彈指云。",
    "T47n1997_019:0805b15_11": "諸人還聞麼。",
    "T47n1997_019:0805b15_12": "僧云聞。",
    "T47n1997_019:0805b16_13": "宗云。",
    "T47n1997_019:0805b16_14": "一隊漢向這裏覓箇什麼。",
    "T47n1997_019:0805b16_15": "以拄杖打趁。",
    "T47n1997_019:0805b17_16": "呵呵大笑歸方丈。",
    "T47n1997_019:0805b18_0": "無學彈指超。",
    "T47n1997_019:0805b18_1": "圓通耳根淨。",
    "T47n1997_019:0805b18_2": "透出聞不聞。",
    "T47n1997_019:0805b18_3": "妙哉觀音行。",
    "T47n1997_019:0805b19_4": "棒頭指出金剛王。",
    "T47n1997_019:0805b19_5": "嶮惡道中為津梁。",
    "T47n1997_019:0805b20_0": "圓悟佛果禪師語錄卷第十九"
}