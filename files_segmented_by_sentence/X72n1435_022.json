{
    "X72n1435_022:0321b04_0": "無異禪師廣錄卷第二十二",
    "X72n1435_022:0321b06_0": "住博山法孫　弘瀚　彚編",
    "X72n1435_022:0321b07_0": "首座法孫　弘裕　同集",
    "X72n1435_022:0321b08_0": "　　宗教答響二",
    "X72n1435_022:0321b09_0": "願力品第六",
    "X72n1435_022:0321b10_0": "問。",
    "X72n1435_022:0321b10_1": "發菩提心。",
    "X72n1435_022:0321b10_2": "最勝功德。",
    "X72n1435_022:0321b10_3": "利他自利。",
    "X72n1435_022:0321b10_4": "為菩薩行。",
    "X72n1435_022:0321b10_5": "如諸比丘對佛菩薩。",
    "X72n1435_022:0321b11_6": "發大誓願。",
    "X72n1435_022:0321b11_7": "為是義故。",
    "X72n1435_022:0321b11_8": "其如宰官當權住世。",
    "X72n1435_022:0321b12_9": "一切易辦。",
    "X72n1435_022:0321b12_10": "至或卑微分力歉薄。",
    "X72n1435_022:0321b12_11": "作何願力。",
    "X72n1435_022:0321b12_12": "而為功德。",
    "X72n1435_022:0321b14_0": "師云。",
    "X72n1435_022:0321b14_1": "法門無量。",
    "X72n1435_022:0321b14_2": "願為先導。",
    "X72n1435_022:0321b14_3": "世出世法。",
    "X72n1435_022:0321b14_4": "無願不成。",
    "X72n1435_022:0321b14_5": "願者好也。",
    "X72n1435_022:0321b15_6": "欲也。",
    "X72n1435_022:0321b15_7": "欲捨離一切惡法故。",
    "X72n1435_022:0321b15_8": "欲破除無明結使故。",
    "X72n1435_022:0321b16_0": "欲入諸菩薩甚深法門故。",
    "X72n1435_022:0321b16_1": "欲廣行善法。",
    "X72n1435_022:0321b16_2": "饒益有情故。",
    "X72n1435_022:0321b17_0": "欲化諸眾生。",
    "X72n1435_022:0321b17_1": "同成佛道故。",
    "X72n1435_022:0321b17_2": "若無有願。",
    "X72n1435_022:0321b17_3": "如畵無膠。",
    "X72n1435_022:0321b17_4": "如馬無轡。",
    "X72n1435_022:0321b18_5": "如陶家器。",
    "X72n1435_022:0321b18_6": "雖成其坏。",
    "X72n1435_022:0321b18_7": "未經火煆。",
    "X72n1435_022:0321b18_8": "終不堪用。",
    "X72n1435_022:0321b18_9": "是故初心學者。",
    "X72n1435_022:0321b19_10": "及諸菩薩。",
    "X72n1435_022:0321b19_11": "以願為基本。",
    "X72n1435_022:0321b19_12": "故更以弘誓堅之。",
    "X72n1435_022:0321b20_0": "弘者廣也。",
    "X72n1435_022:0321b20_1": "誓者制也。",
    "X72n1435_022:0321b20_2": "以弘誓願。",
    "X72n1435_022:0321b20_3": "廣制其心。",
    "X72n1435_022:0321b20_4": "令無退墮。",
    "X72n1435_022:0321b21_0": "釋迦大師因地中。",
    "X72n1435_022:0321b21_1": "發四弘誓願。",
    "X72n1435_022:0321b21_2": "謂眾生無邊誓願度。",
    "X72n1435_022:0321b22_0": "煩惱無盡誓願斷。",
    "X72n1435_022:0321b22_1": "法門無量誓願學。",
    "X72n1435_022:0321b22_2": "佛道無上誓願成。",
    "X72n1435_022:0321b23_3": "然發願度生。",
    "X72n1435_022:0321b23_4": "必能自度。",
    "X72n1435_022:0321b23_5": "入此法門。",
    "X72n1435_022:0321b23_6": "煩惱自斷。",
    "X72n1435_022:0321b23_7": "法門自深。",
    "X72n1435_022:0321b24_8": "佛道自成矣。",
    "X72n1435_022:0321b24_9": "發此誓願。",
    "X72n1435_022:0321b24_10": "須以勇猛智力。",
    "X72n1435_022:0321b24_11": "資以自強。",
    "X72n1435_022:0321c01_12": "如有力人無有怯弱。",
    "X72n1435_022:0321c01_13": "無有退轉。",
    "X72n1435_022:0321c01_14": "徑入佛道。",
    "X72n1435_022:0321c01_15": "斯誓願最為有力也。",
    "X72n1435_022:0321c02_16": "是故金剛藏菩薩。",
    "X72n1435_022:0321c02_17": "於華嚴會上。",
    "X72n1435_022:0321c02_18": "令諸菩薩憶念本所誓願。",
    "X72n1435_022:0321c03_19": "普大饒益一切眾生。",
    "X72n1435_022:0321c03_20": "皆令得入不思議智慧之門。",
    "X72n1435_022:0321c04_21": "又諸菩薩。",
    "X72n1435_022:0321c04_22": "因地有大智力。",
    "X72n1435_022:0321c04_23": "發大誓願。",
    "X72n1435_022:0321c05_0": "謂能摧怨敵故。",
    "X72n1435_022:0321c05_1": "不可屈折故。",
    "X72n1435_022:0321c05_2": "知是處非處。",
    "X72n1435_022:0321c05_3": "無因惡因等。",
    "X72n1435_022:0321c06_4": "儒云終日乾乾。",
    "X72n1435_022:0321c06_5": "此亦剛毅之象。",
    "X72n1435_022:0321c06_6": "以自強不息。",
    "X72n1435_022:0321c06_7": "而入道故。",
    "X72n1435_022:0321c07_8": "初心者。",
    "X72n1435_022:0321c07_9": "勇猛智力。",
    "X72n1435_022:0321c07_10": "降伏魔外。",
    "X72n1435_022:0321c07_11": "入深法門故。",
    "X72n1435_022:0321c07_12": "若無願力者。",
    "X72n1435_022:0321c08_13": "譬如種子無陽。",
    "X72n1435_022:0321c08_14": "悉爛壞故。",
    "X72n1435_022:0321c08_15": "此願力非但比丘能發。",
    "X72n1435_022:0321c09_16": "諸宰官亦當發。",
    "X72n1435_022:0321c09_17": "豈但宰官有權位能發。",
    "X72n1435_022:0321c09_18": "即一切長者居士。",
    "X72n1435_022:0321c10_19": "乃至最卑微無勢者。",
    "X72n1435_022:0321c10_20": "皆悉當發此誓願。",
    "X72n1435_022:0321c10_21": "自度度人。",
    "X72n1435_022:0321c11_22": "將所修功德。",
    "X72n1435_022:0321c11_23": "悉皆回向大地眾生。",
    "X72n1435_022:0321c11_24": "同成佛道。",
    "X72n1435_022:0321c12_0": "此即覺心。",
    "X72n1435_022:0321c12_1": "覺心者即菩提心也。",
    "X72n1435_022:0321c12_2": "此心不可分發。",
    "X72n1435_022:0321c12_3": "當全發。",
    "X72n1435_022:0321c13_4": "又不可間發。",
    "X72n1435_022:0321c13_5": "當時時發。",
    "X72n1435_022:0321c13_6": "數數發。",
    "X72n1435_022:0321c13_7": "對佛發。",
    "X72n1435_022:0321c13_8": "對菩薩發。",
    "X72n1435_022:0321c14_0": "對聖僧發。",
    "X72n1435_022:0321c14_1": "對善知識亦發。",
    "X72n1435_022:0321c14_2": "對一切僧友。",
    "X72n1435_022:0321c14_3": "及有情。",
    "X72n1435_022:0321c14_4": "一切眾生前。",
    "X72n1435_022:0321c15_5": "悉當發。",
    "X72n1435_022:0321c15_6": "以此大心。",
    "X72n1435_022:0321c15_7": "直至成佛。",
    "X72n1435_022:0321c15_8": "皆願力故。",
    "X72n1435_022:0321c15_9": "故知願力乃佛法先導。",
    "X72n1435_022:0321c16_10": "如有一人。",
    "X72n1435_022:0321c16_11": "我欲參禪。",
    "X72n1435_022:0321c16_12": "決不退墮。",
    "X72n1435_022:0321c16_13": "即願力故。",
    "X72n1435_022:0321c17_14": "豈但善願。",
    "X72n1435_022:0321c17_15": "即世間所欲。",
    "X72n1435_022:0321c17_16": "皆以願力成故。",
    "X72n1435_022:0321c17_17": "昔有一推車人。",
    "X72n1435_022:0321c18_18": "不信佛法。",
    "X72n1435_022:0321c18_19": "一日推車。",
    "X72n1435_022:0321c18_20": "至墖邊過。",
    "X72n1435_022:0321c18_21": "見火燒寶墖。",
    "X72n1435_022:0321c19_22": "心不忍壞嚴飾故。",
    "X72n1435_022:0321c19_23": "進前救之。",
    "X72n1435_022:0321c19_24": "已戲發願言。",
    "X72n1435_022:0321c19_25": "佛說有果報法。",
    "X72n1435_022:0321c20_26": "我救此寶墖。",
    "X72n1435_022:0321c20_27": "願我來世。",
    "X72n1435_022:0321c20_28": "為一最長大有力者。",
    "X72n1435_022:0321c21_0": "捨此身已。",
    "X72n1435_022:0321c21_1": "即生阿修羅道。",
    "X72n1435_022:0321c21_2": "其身最長大而有力。",
    "X72n1435_022:0321c21_3": "此戲發願。",
    "X72n1435_022:0321c22_4": "亦滿足不虗。",
    "X72n1435_022:0321c22_5": "況真實心。",
    "X72n1435_022:0321c22_6": "至誠心而發願。",
    "X72n1435_022:0321c22_7": "無有不滿足者。",
    "X72n1435_022:0321c23_8": "如初心發願。",
    "X72n1435_022:0321c23_9": "慎不可生卑劣想。",
    "X72n1435_022:0321c23_10": "當發菩提心。",
    "X72n1435_022:0321c24_0": "凡所修最微善根。",
    "X72n1435_022:0321c24_1": "及最殊功德。",
    "X72n1435_022:0321c24_2": "悉皆發願。",
    "X72n1435_022:0321c24_3": "回向於大地眾生。",
    "X72n1435_022:0322a01_4": "同成佛道。",
    "X72n1435_022:0322a01_5": "縱於其中。",
    "X72n1435_022:0322a01_6": "顛倒退墮。",
    "X72n1435_022:0322a01_7": "亦藉願力相資。",
    "X72n1435_022:0322a02_8": "如無目人有牽引者。",
    "X72n1435_022:0322a02_9": "能前進故。",
    "X72n1435_022:0322a02_10": "修淨土者。",
    "X72n1435_022:0322a02_11": "以信行願為資糧。",
    "X72n1435_022:0322a03_12": "參禪者。",
    "X72n1435_022:0322a03_13": "安得不以願力為導引耶。",
    "X72n1435_022:0322a03_14": "在家欲捨塵勞。",
    "X72n1435_022:0322a04_15": "欲離火宅。",
    "X72n1435_022:0322a04_16": "欲出生死。",
    "X72n1435_022:0322a04_17": "欲免輪迴。",
    "X72n1435_022:0322a04_18": "非願力堅強。",
    "X72n1435_022:0322a05_0": "則不能也。",
    "X72n1435_022:0322a05_1": "是故當發大願。",
    "X72n1435_022:0322a05_2": "豈以卑劣。",
    "X72n1435_022:0322a05_3": "而不發大心乎。",
    "X72n1435_022:0322a06_0": "若達平等實相。",
    "X72n1435_022:0322a06_1": "一微細眾生。",
    "X72n1435_022:0322a06_2": "與毗盧遮那佛。",
    "X72n1435_022:0322a06_3": "等無有異。",
    "X72n1435_022:0322a07_4": "華嚴疏謂。",
    "X72n1435_022:0322a07_5": "遮那如來入一微細眾生身中入定。",
    "X72n1435_022:0322a07_6": "全身不散。",
    "X72n1435_022:0322a08_7": "此眾生不覺不知。",
    "X72n1435_022:0322a08_8": "謂佛生同體故。",
    "X72n1435_022:0322a08_9": "理無分齊故。",
    "X72n1435_022:0322a09_10": "維摩經謂。",
    "X72n1435_022:0322a09_11": "供養難勝如來。",
    "X72n1435_022:0322a09_12": "與最下乞者等。",
    "X72n1435_022:0322a09_13": "斯達實相之理。",
    "X72n1435_022:0322a10_14": "無所分別。",
    "X72n1435_022:0322a10_15": "以此觀。",
    "X72n1435_022:0322a10_16": "人有貴賤。",
    "X72n1435_022:0322a10_17": "位有尊卑。",
    "X72n1435_022:0322a10_18": "而心無高下也。",
    "X72n1435_022:0322a11_19": "是故當發大心。",
    "X72n1435_022:0322a11_20": "以願力維持。",
    "X72n1435_022:0322a11_21": "直成佛道。",
    "X72n1435_022:0322a11_22": "似不可須臾有間然也。",
    "X72n1435_022:0322a13_0": "懺悔品第七",
    "X72n1435_022:0322a14_0": "問。",
    "X72n1435_022:0322a14_1": "懺悔二義。",
    "X72n1435_022:0322a14_2": "槩括過未眾生惡業。",
    "X72n1435_022:0322a14_3": "宜於自心皆悉懺悔。",
    "X72n1435_022:0322a15_4": "今如請僧禮拜求懺。",
    "X72n1435_022:0322a15_5": "或復持般若諸經。",
    "X72n1435_022:0322a15_6": "皆懺悔義。",
    "X72n1435_022:0322a16_0": "又復自心朝夕懺悔。",
    "X72n1435_022:0322a16_1": "此於法中。",
    "X72n1435_022:0322a16_2": "是一是二。",
    "X72n1435_022:0322a16_3": "有淺深否。",
    "X72n1435_022:0322a17_0": "師云。",
    "X72n1435_022:0322a17_1": "業繫之身。",
    "X72n1435_022:0322a17_2": "眾苦逼迫。",
    "X72n1435_022:0322a17_3": "五陰熾盛。",
    "X72n1435_022:0322a17_4": "六賊交侵。",
    "X72n1435_022:0322a17_5": "心識奔馳。",
    "X72n1435_022:0322a18_6": "無暫停息。",
    "X72n1435_022:0322a18_7": "起十惡之業因。",
    "X72n1435_022:0322a18_8": "償無窮之苦果。",
    "X72n1435_022:0322a18_9": "貪嗔癡愛。",
    "X72n1435_022:0322a19_10": "猶如猛火。",
    "X72n1435_022:0322a19_11": "妄言綺語。",
    "X72n1435_022:0322a19_12": "疾於迅流。",
    "X72n1435_022:0322a19_13": "造殺盜婬。",
    "X72n1435_022:0322a19_14": "無底畔之深坑。",
    "X72n1435_022:0322a20_15": "著見慢眠。",
    "X72n1435_022:0322a20_16": "沒涯岸之苦海。",
    "X72n1435_022:0322a20_17": "起六十二種邪見。",
    "X72n1435_022:0322a21_18": "成八萬四千障門。",
    "X72n1435_022:0322a21_19": "障菩提心。",
    "X72n1435_022:0322a21_20": "障菩提道。",
    "X72n1435_022:0322a21_21": "障菩提行。",
    "X72n1435_022:0322a22_0": "障菩提願。",
    "X72n1435_022:0322a22_1": "輪迴三有。",
    "X72n1435_022:0322a22_2": "不聞佛法僧之洪名。",
    "X72n1435_022:0322a22_3": "汩沒四生。",
    "X72n1435_022:0322a23_0": "那識過現未之報應。",
    "X72n1435_022:0322a23_1": "殊不知因連於果。",
    "X72n1435_022:0322a23_2": "果徹於因。",
    "X72n1435_022:0322a23_3": "因果相詶。",
    "X72n1435_022:0322a24_4": "絲髮不爽。",
    "X72n1435_022:0322a24_5": "因微果熾。",
    "X72n1435_022:0322a24_6": "慎身分造十習之愆。",
    "X72n1435_022:0322a24_7": "作少償多。",
    "X72n1435_022:0322b01_8": "故地獄有六交之報。",
    "X72n1435_022:0322b01_9": "若不痛申懺悔悛革前非。",
    "X72n1435_022:0322b02_10": "互造互償。",
    "X72n1435_022:0322b02_11": "無有窮已。",
    "X72n1435_022:0322b02_12": "夫懺者。",
    "X72n1435_022:0322b02_13": "梵語懺摩。",
    "X72n1435_022:0322b02_14": "此云悔過。",
    "X72n1435_022:0322b03_0": "懺謂永斷未來非。",
    "X72n1435_022:0322b03_1": "悔謂耻心於往犯。",
    "X72n1435_022:0322b03_2": "故云已作之罪願乞消除。",
    "X72n1435_022:0322b04_3": "未來之非更不敢造。",
    "X72n1435_022:0322b04_4": "洗心懺悔者。",
    "X72n1435_022:0322b04_5": "有二種義。",
    "X72n1435_022:0322b05_6": "一者理懺。",
    "X72n1435_022:0322b05_7": "二者事懺。",
    "X72n1435_022:0322b05_8": "理懺者。",
    "X72n1435_022:0322b05_9": "如云罪從心起將心懺。",
    "X72n1435_022:0322b06_10": "心若滅時罪亦亡。",
    "X72n1435_022:0322b06_11": "罪亡心滅兩俱空。",
    "X72n1435_022:0322b06_12": "是則名為真懺悔。",
    "X72n1435_022:0322b07_13": "又云。",
    "X72n1435_022:0322b07_14": "若欲懺悔者。",
    "X72n1435_022:0322b07_15": "端坐念實相。",
    "X72n1435_022:0322b07_16": "眾罪如霜露。",
    "X72n1435_022:0322b07_17": "慧日能消除。",
    "X72n1435_022:0322b08_18": "如云罪從業起。",
    "X72n1435_022:0322b08_19": "業從心起。",
    "X72n1435_022:0322b08_20": "心既無生。",
    "X72n1435_022:0322b08_21": "罪將安寄。",
    "X72n1435_022:0322b09_22": "良以眾生業累深厚。",
    "X72n1435_022:0322b09_23": "剎那靜念。",
    "X72n1435_022:0322b09_24": "倐忽萬端。",
    "X72n1435_022:0322b09_25": "若不深達實相之理。",
    "X72n1435_022:0322b10_26": "難以去除。",
    "X72n1435_022:0322b10_27": "不究緣生之法。",
    "X72n1435_022:0322b10_28": "何能滅罪。",
    "X72n1435_022:0322b11_0": "永嘉大師云。",
    "X72n1435_022:0322b11_1": "觀實相無人法。",
    "X72n1435_022:0322b11_2": "剎那滅却阿鼻業。",
    "X72n1435_022:0322b11_3": "若真實究理。",
    "X72n1435_022:0322b12_4": "惟參禪一門最為確當。",
    "X72n1435_022:0322b12_5": "單提一句話頭。",
    "X72n1435_022:0322b12_6": "大理不明。",
    "X72n1435_022:0322b13_7": "如喪考妣。",
    "X72n1435_022:0322b13_8": "果有如喪考妣之心。",
    "X72n1435_022:0322b13_9": "自然識浪不生。",
    "X72n1435_022:0322b14_0": "業不能繫。",
    "X72n1435_022:0322b14_1": "不然則遏捺妄心。",
    "X72n1435_022:0322b14_2": "令妄不起。",
    "X72n1435_022:0322b14_3": "謂之心亡。",
    "X72n1435_022:0322b14_4": "謂之罪滅。",
    "X72n1435_022:0322b15_5": "大似隔[革*(華-(十*〡*十)+(人*〡*人))]抓癢。",
    "X72n1435_022:0322b15_6": "欲滅罪愆。",
    "X72n1435_022:0322b15_7": "欲了生死。",
    "X72n1435_022:0322b15_8": "欲出輪迴。",
    "X72n1435_022:0322b16_9": "無有是處。",
    "X72n1435_022:0322b16_10": "又如一心念佛。",
    "X72n1435_022:0322b16_11": "并修止觀法門。",
    "X72n1435_022:0322b16_12": "深達實相。",
    "X72n1435_022:0322b17_13": "皆可滅罪。",
    "X72n1435_022:0322b17_14": "惟參禪一門。",
    "X72n1435_022:0322b17_15": "最為超㧞。",
    "X72n1435_022:0322b17_16": "似滅罪疾。",
    "X72n1435_022:0322b17_17": "又不可以諸法門為比對也。",
    "X72n1435_022:0322b18_18": "二者事懺。",
    "X72n1435_022:0322b18_19": "謂端對聖容。",
    "X72n1435_022:0322b18_20": "廣陳供養。",
    "X72n1435_022:0322b19_21": "散花行道。",
    "X72n1435_022:0322b19_22": "稱佛洪名。",
    "X72n1435_022:0322b19_23": "五體投地。",
    "X72n1435_022:0322b19_24": "如大山崩。",
    "X72n1435_022:0322b19_25": "發露披陳。",
    "X72n1435_022:0322b20_26": "求哀懺悔。",
    "X72n1435_022:0322b20_27": "或禮梁皇法華等懺。",
    "X72n1435_022:0322b20_28": "或禮千佛名經。",
    "X72n1435_022:0322b21_0": "皆懺悔意。",
    "X72n1435_022:0322b21_1": "或七日乃至四十九日。",
    "X72n1435_022:0322b21_2": "百日三年。",
    "X72n1435_022:0322b21_3": "現諸瑞像。",
    "X72n1435_022:0322b22_4": "乃能滅罪。",
    "X72n1435_022:0322b22_5": "此在自己力行。",
    "X72n1435_022:0322b22_6": "或自身德薄行淺。",
    "X72n1435_022:0322b22_7": "請戒德名僧。",
    "X72n1435_022:0322b23_8": "二十四位。",
    "X72n1435_022:0322b23_9": "至四十八位。",
    "X72n1435_022:0322b23_10": "一百八位。",
    "X72n1435_022:0322b23_11": "鋪設齋筵。",
    "X72n1435_022:0322b24_0": "亦當滅罪。",
    "X72n1435_022:0322b24_1": "如目連尊者。",
    "X72n1435_022:0322b24_2": "自不能救母。",
    "X72n1435_022:0322b24_3": "佛今於僧自恣日。",
    "X72n1435_022:0322c01_4": "供養眾僧。",
    "X72n1435_022:0322c01_5": "及禮眾僧足。",
    "X72n1435_022:0322c01_6": "其母當日滅罪。",
    "X72n1435_022:0322c01_7": "脫餓鬼苦。",
    "X72n1435_022:0322c02_0": "此仗修行之力。",
    "X72n1435_022:0322c02_1": "懺主敬眾僧。",
    "X72n1435_022:0322c02_2": "當作佛想。",
    "X72n1435_022:0322c02_3": "即得滅罪。",
    "X72n1435_022:0322c02_4": "不可生怠惰心。",
    "X72n1435_022:0322c03_5": "輕慢心。",
    "X72n1435_022:0322c03_6": "如生此等心者。",
    "X72n1435_022:0322c03_7": "豈但不滅罪。",
    "X72n1435_022:0322c03_8": "只恐反得罪。",
    "X72n1435_022:0322c04_9": "如請無戒行赴應演教之僧。",
    "X72n1435_022:0322c04_10": "斯即捨財功德。",
    "X72n1435_022:0322c05_11": "僧尚得罪。",
    "X72n1435_022:0322c05_12": "非能與懺主滅罪也。",
    "X72n1435_022:0322c05_13": "又此懺悔一門。",
    "X72n1435_022:0322c05_14": "思地獄苦。",
    "X72n1435_022:0322c06_15": "發菩提心。",
    "X72n1435_022:0322c06_16": "生大恐懼。",
    "X72n1435_022:0322c06_17": "生大慚愧。",
    "X72n1435_022:0322c06_18": "念地獄餓鬼畜生道無邊眾生之苦。",
    "X72n1435_022:0322c07_19": "當為彼等。",
    "X72n1435_022:0322c07_20": "同求懺悔。",
    "X72n1435_022:0322c07_21": "脫惡道苦。",
    "X72n1435_022:0322c08_22": "餐佛乘樂。",
    "X72n1435_022:0322c08_23": "使地獄空。",
    "X72n1435_022:0322c08_24": "不為我一人得出離故。",
    "X72n1435_022:0322c08_25": "此即菩提心。",
    "X72n1435_022:0322c09_26": "若發此心。",
    "X72n1435_022:0322c09_27": "刀山劒樹盡作香林。",
    "X72n1435_022:0322c09_28": "爐炭鑊湯皆為淨土。",
    "X72n1435_022:0322c10_29": "則無惡不去。",
    "X72n1435_022:0322c10_30": "無罪不消也。",
    "X72n1435_022:0322c10_31": "又懺悔者。",
    "X72n1435_022:0322c10_32": "思生死無常苦空無我。",
    "X72n1435_022:0322c11_33": "一息不來。",
    "X72n1435_022:0322c11_34": "剎那異世。",
    "X72n1435_022:0322c11_35": "設墮惡道。",
    "X72n1435_022:0322c11_36": "苦不可言。",
    "X72n1435_022:0322c12_37": "懼惡道苦。",
    "X72n1435_022:0322c12_38": "發菩提心。",
    "X72n1435_022:0322c12_39": "深心懺悔。",
    "X72n1435_022:0322c12_40": "如彼怖王懼死。",
    "X72n1435_022:0322c13_0": "則無罪不滅也。",
    "X72n1435_022:0322c13_1": "怖王者。",
    "X72n1435_022:0322c13_2": "佛滅度一百年。",
    "X72n1435_022:0322c13_3": "波吒梨城有王。",
    "X72n1435_022:0322c14_4": "名阿育。",
    "X72n1435_022:0322c14_5": "此云無憂。",
    "X72n1435_022:0322c14_6": "深信佛法。",
    "X72n1435_022:0322c14_7": "有弟名毗多輪。",
    "X72n1435_022:0322c14_8": "此云除憂。",
    "X72n1435_022:0322c15_9": "深著邪見。",
    "X72n1435_022:0322c15_10": "信諸外道。",
    "X72n1435_022:0322c15_11": "無憂王愍弟邪故。",
    "X72n1435_022:0322c15_12": "遂設方便。",
    "X72n1435_022:0322c16_13": "語大臣言。",
    "X72n1435_022:0322c16_14": "我今洗浴。",
    "X72n1435_022:0322c16_15": "入彼浴室。",
    "X72n1435_022:0322c16_16": "脫天冠衣服等。",
    "X72n1435_022:0322c16_17": "汝當以我服飾。",
    "X72n1435_022:0322c17_18": "莊嚴我弟。",
    "X72n1435_022:0322c17_19": "令登王位。",
    "X72n1435_022:0322c17_20": "臣如教已。",
    "X72n1435_022:0322c17_21": "弟方登座。",
    "X72n1435_022:0322c18_22": "王出見弟。",
    "X72n1435_022:0322c18_23": "即命殺之。",
    "X72n1435_022:0322c18_24": "大臣等白王言。",
    "X72n1435_022:0322c18_25": "是王親弟。",
    "X72n1435_022:0322c18_26": "願王息怒捨過。",
    "X72n1435_022:0322c19_27": "王言。",
    "X72n1435_022:0322c19_28": "是我親弟。",
    "X72n1435_022:0322c19_29": "於七日中。",
    "X72n1435_022:0322c19_30": "暫與國事令其作王。",
    "X72n1435_022:0322c20_31": "待七日滿。",
    "X72n1435_022:0322c20_32": "即當殺之。",
    "X72n1435_022:0322c20_33": "即以種種妓樂及諸綵女。",
    "X72n1435_022:0322c21_34": "供給侍衛。",
    "X72n1435_022:0322c21_35": "一切臣民。",
    "X72n1435_022:0322c21_36": "皆往問訊。",
    "X72n1435_022:0322c21_37": "行殺之人執刀門立。",
    "X72n1435_022:0322c22_38": "日日白王。",
    "X72n1435_022:0322c22_39": "一日已過。",
    "X72n1435_022:0322c22_40": "六日當死。",
    "X72n1435_022:0322c22_41": "如是乃至六日已過。",
    "X72n1435_022:0322c23_42": "餘一日在。",
    "X72n1435_022:0322c23_43": "至第七日竟。",
    "X72n1435_022:0322c23_44": "大臣諸人。",
    "X72n1435_022:0322c23_45": "將王弟共往阿育王所。",
    "X72n1435_022:0322c24_46": "問弟言。",
    "X72n1435_022:0322c24_47": "汝七日為王。",
    "X72n1435_022:0322c24_48": "百種妓樂。",
    "X72n1435_022:0322c24_49": "皆恣汝意。",
    "X72n1435_022:0322c24_50": "無數眾人。",
    "X72n1435_022:0323a01_51": "日日問訊呪願於汝。",
    "X72n1435_022:0323a01_52": "汝好見聞否。",
    "X72n1435_022:0323a01_53": "弟答云。",
    "X72n1435_022:0323a01_54": "我為畏死。",
    "X72n1435_022:0323a02_55": "心怖懼故。",
    "X72n1435_022:0323a02_56": "都不見聞。",
    "X72n1435_022:0323a02_57": "復以偈答曰。",
    "X72n1435_022:0323a02_58": "我於七日中。",
    "X72n1435_022:0323a03_59": "不見不聞聲。",
    "X72n1435_022:0323a03_60": "不嗅不甞味。",
    "X72n1435_022:0323a03_61": "亦不覺諸觸。",
    "X72n1435_022:0323a03_62": "我身莊嚴具。",
    "X72n1435_022:0323a04_63": "及諸綵女等。",
    "X72n1435_022:0323a04_64": "思惟懼死故。",
    "X72n1435_022:0323a04_65": "不知如此事。",
    "X72n1435_022:0323a04_66": "妓女歌舞聲。",
    "X72n1435_022:0323a05_67": "宮殿及臥具。",
    "X72n1435_022:0323a05_68": "大地諸珍寶。",
    "X72n1435_022:0323a05_69": "初無歡喜心。",
    "X72n1435_022:0323a05_70": "以見行殺者。",
    "X72n1435_022:0323a06_71": "執刀門外立。",
    "X72n1435_022:0323a06_72": "又聞搖鈴聲。",
    "X72n1435_022:0323a06_73": "令我懷死畏。",
    "X72n1435_022:0323a06_74": "死橛釘我心。",
    "X72n1435_022:0323a07_75": "不知玅五欲。",
    "X72n1435_022:0323a07_76": "既著畏死病。",
    "X72n1435_022:0323a07_77": "不得安穩眠。",
    "X72n1435_022:0323a07_78": "思惟死將至。",
    "X72n1435_022:0323a08_79": "不覺夜已過。",
    "X72n1435_022:0323a08_80": "我今歸依佛。",
    "X72n1435_022:0323a08_81": "佛面如蓮花。",
    "X72n1435_022:0323a08_82": "天人所歸依。",
    "X72n1435_022:0323a09_83": "無漏法及僧。",
    "X72n1435_022:0323a09_84": "時王見弟回心歸向三寶。",
    "X72n1435_022:0323a09_85": "心大歡喜。",
    "X72n1435_022:0323a10_0": "種種軟語。",
    "X72n1435_022:0323a10_1": "安存其弟。",
    "X72n1435_022:0323a10_2": "若懺悔者。",
    "X72n1435_022:0323a10_3": "有如此怖死之心。",
    "X72n1435_022:0323a10_4": "於世間境。",
    "X72n1435_022:0323a11_5": "緣五欲玅樂。",
    "X72n1435_022:0323a11_6": "心不貪染。",
    "X72n1435_022:0323a11_7": "又觀緣生之法。",
    "X72n1435_022:0323a11_8": "畢竟無我。",
    "X72n1435_022:0323a12_9": "誰為造者。",
    "X72n1435_022:0323a12_10": "誰為受者。",
    "X72n1435_022:0323a12_11": "心本不有。",
    "X72n1435_022:0323a12_12": "罪性自空。",
    "X72n1435_022:0323a12_13": "斯謂真懺矣。",
    "X72n1435_022:0323a13_14": "又當翻前惡境。",
    "X72n1435_022:0323a13_15": "斷相續心。",
    "X72n1435_022:0323a13_16": "自愧尅責。",
    "X72n1435_022:0323a13_17": "將已作之罪。",
    "X72n1435_022:0323a14_18": "發露披陳。",
    "X72n1435_022:0323a14_19": "不復覆藏。",
    "X72n1435_022:0323a14_20": "稱十方諸佛洪名。",
    "X72n1435_022:0323a14_21": "觀罪性空。",
    "X72n1435_022:0323a15_22": "不於幻化場中復造惡業。",
    "X72n1435_022:0323a15_23": "而明信因果。",
    "X72n1435_022:0323a15_24": "守護正法。",
    "X72n1435_022:0323a16_0": "如此則無惡不消。",
    "X72n1435_022:0323a16_1": "無罪不滅。",
    "X72n1435_022:0323a16_2": "自懺他懺。",
    "X72n1435_022:0323a16_3": "一二淺深。",
    "X72n1435_022:0323a16_4": "俱不可得也。",
    "X72n1435_022:0323a18_0": "福報品第八",
    "X72n1435_022:0323a19_0": "問。",
    "X72n1435_022:0323a19_1": "作福求報。",
    "X72n1435_022:0323a19_2": "此最劣根。",
    "X72n1435_022:0323a19_3": "然不作福。",
    "X72n1435_022:0323a19_4": "復何望報。",
    "X72n1435_022:0323a19_5": "今如罪福。",
    "X72n1435_022:0323a20_6": "皆繇自心。",
    "X72n1435_022:0323a20_7": "種種報定差耶。",
    "X72n1435_022:0323a21_0": "師云。",
    "X72n1435_022:0323a21_1": "福罪報應。",
    "X72n1435_022:0323a21_2": "如影隨身。",
    "X72n1435_022:0323a21_3": "如空答響。",
    "X72n1435_022:0323a21_4": "如人挑擔。",
    "X72n1435_022:0323a21_5": "重者先墜。",
    "X72n1435_022:0323a22_6": "求其絲毫遠離。",
    "X72n1435_022:0323a22_7": "了不可得。",
    "X72n1435_022:0323a22_8": "又安可求報耶。",
    "X72n1435_022:0323a22_9": "然諸佛悉具二嚴。",
    "X72n1435_022:0323a23_10": "謂福足慧足。",
    "X72n1435_022:0323a23_11": "而因地必當先布福田以資慧種。",
    "X72n1435_022:0323a24_12": "福緣深厚。",
    "X72n1435_022:0323a24_13": "自得心開。",
    "X72n1435_022:0323a24_14": "非求報也。",
    "X72n1435_022:0323a24_15": "佛開六度。",
    "X72n1435_022:0323a24_16": "而啟萬行。",
    "X72n1435_022:0323b01_17": "檀波羅密者此云施。",
    "X72n1435_022:0323b01_18": "而施者。",
    "X72n1435_022:0323b01_19": "達三輪體空。",
    "X72n1435_022:0323b01_20": "斯不望報。",
    "X72n1435_022:0323b02_21": "報自隨之。",
    "X72n1435_022:0323b02_22": "尸波羅密此云戒。",
    "X72n1435_022:0323b02_23": "羼提波羅密此云忍辱。",
    "X72n1435_022:0323b03_24": "毗梨耶波羅密此云精進。",
    "X72n1435_022:0323b03_25": "教中謂此四者悉修福。",
    "X72n1435_022:0323b04_26": "後二度云慧。",
    "X72n1435_022:0323b04_27": "謂禪與般若。",
    "X72n1435_022:0323b04_28": "前四度皆含智慧。",
    "X72n1435_022:0323b04_29": "若無智慧。",
    "X72n1435_022:0323b05_30": "安肯行布施及精進耶。",
    "X72n1435_022:0323b05_31": "然諸佛以此而證涅槃。",
    "X72n1435_022:0323b06_32": "菩薩以此而行萬行。",
    "X72n1435_022:0323b06_33": "非求報也。",
    "X72n1435_022:0323b06_34": "實莊嚴法身。",
    "X72n1435_022:0323b06_35": "資養性地。",
    "X72n1435_022:0323b07_36": "祇施之一法。",
    "X72n1435_022:0323b07_37": "直至菩提。",
    "X72n1435_022:0323b07_38": "況餘度乎。",
    "X72n1435_022:0323b07_39": "良以行人廣行六度。",
    "X72n1435_022:0323b08_40": "必以願力相資。",
    "X72n1435_022:0323b08_41": "悉皆回向無上菩提。",
    "X72n1435_022:0323b08_42": "不求餘果。",
    "X72n1435_022:0323b09_43": "如布施一法。",
    "X72n1435_022:0323b09_44": "諸佛因地。",
    "X72n1435_022:0323b09_45": "莫不皆然。",
    "X72n1435_022:0323b09_46": "後得淨佛國土。",
    "X72n1435_022:0323b10_0": "富有法財。",
    "X72n1435_022:0323b10_1": "非求報也。",
    "X72n1435_022:0323b10_2": "昔摩訶迦葉尊者。",
    "X72n1435_022:0323b10_3": "為煆金師。",
    "X72n1435_022:0323b10_4": "善明金性。",
    "X72n1435_022:0323b11_5": "使其柔伏。",
    "X72n1435_022:0323b11_6": "付法傳云。",
    "X72n1435_022:0323b11_7": "甞於久遠劫中。",
    "X72n1435_022:0323b11_8": "毗婆尸佛涅槃後。",
    "X72n1435_022:0323b12_9": "四眾起墖。",
    "X72n1435_022:0323b12_10": "墖中像面金色有缺壞。",
    "X72n1435_022:0323b12_11": "時有貧女。",
    "X72n1435_022:0323b13_12": "將金珠往金師所。",
    "X72n1435_022:0323b13_13": "請飾佛面。",
    "X72n1435_022:0323b13_14": "既而因共發願。",
    "X72n1435_022:0323b13_15": "願我二人。",
    "X72n1435_022:0323b14_16": "為無姻夫婦。",
    "X72n1435_022:0323b14_17": "以是因緣。",
    "X72n1435_022:0323b14_18": "九十一劫。",
    "X72n1435_022:0323b14_19": "身皆金色。",
    "X72n1435_022:0323b14_20": "後生梵天。",
    "X72n1435_022:0323b15_21": "天壽盡生中天摩竭陀國婆羅門家。",
    "X72n1435_022:0323b15_22": "名曰迦葉波。",
    "X72n1435_022:0323b16_23": "此云飲光勝尊。",
    "X72n1435_022:0323b16_24": "葢以金色為號也。",
    "X72n1435_022:0323b16_25": "繇是志求出家。",
    "X72n1435_022:0323b17_26": "冀度諸有。",
    "X72n1435_022:0323b17_27": "佛言。",
    "X72n1435_022:0323b17_28": "善來比丘。",
    "X72n1435_022:0323b17_29": "鬚髮自除。",
    "X72n1435_022:0323b17_30": "袈裟著體。",
    "X72n1435_022:0323b17_31": "常於眾中。",
    "X72n1435_022:0323b18_32": "稱歎第一。",
    "X72n1435_022:0323b18_33": "乃至付法傳衣為西天初祖。",
    "X72n1435_022:0323b18_34": "此因果歷然。",
    "X72n1435_022:0323b19_35": "以嚴飾金故。",
    "X72n1435_022:0323b19_36": "而得身有金光。",
    "X72n1435_022:0323b19_37": "以願力相資。",
    "X72n1435_022:0323b19_38": "而證極果。",
    "X72n1435_022:0323b20_39": "此不求報。",
    "X72n1435_022:0323b20_40": "而報自至。",
    "X72n1435_022:0323b20_41": "非求報也。",
    "X72n1435_022:0323b20_42": "余甞評之。",
    "X72n1435_022:0323b20_43": "菩提心如種子。",
    "X72n1435_022:0323b21_44": "福如雨露良田。",
    "X72n1435_022:0323b21_45": "惡如火燄刀斧。",
    "X72n1435_022:0323b21_46": "假如種苗生發之時。",
    "X72n1435_022:0323b22_47": "必得其雨露水土。",
    "X72n1435_022:0323b22_48": "方可成就。",
    "X72n1435_022:0323b22_49": "或遭其火燒刀斫。",
    "X72n1435_022:0323b23_50": "又安可植耶。",
    "X72n1435_022:0323b23_51": "如成棟梁之材。",
    "X72n1435_022:0323b23_52": "刀斧俱非。",
    "X72n1435_022:0323b23_53": "水土亦無用矣。",
    "X72n1435_022:0323b24_54": "七佛偈曰。",
    "X72n1435_022:0323b24_55": "起諸善法本是幻。",
    "X72n1435_022:0323b24_56": "造諸惡業亦是幻。",
    "X72n1435_022:0323c01_57": "身如聚沫心如風。",
    "X72n1435_022:0323c01_58": "幻出無根無實性。",
    "X72n1435_022:0323c01_59": "愚者謂善惡俱幻。",
    "X72n1435_022:0323c02_60": "造諸惡業。",
    "X72n1435_022:0323c02_61": "似不相妨。",
    "X72n1435_022:0323c02_62": "殊不知幻人相織幻輪圍。",
    "X72n1435_022:0323c03_63": "幻業能招幻所治。",
    "X72n1435_022:0323c03_64": "又云。",
    "X72n1435_022:0323c03_65": "一切眾生性清淨。",
    "X72n1435_022:0323c03_66": "從本無生無可滅。",
    "X72n1435_022:0323c04_67": "即此身心是幻生。",
    "X72n1435_022:0323c04_68": "幻化之中無罪福。",
    "X72n1435_022:0323c04_69": "如成棟梁。",
    "X72n1435_022:0323c05_70": "則不用刀斧水土。",
    "X72n1435_022:0323c05_71": "如佛成道時。",
    "X72n1435_022:0323c05_72": "無邊剎土。",
    "X72n1435_022:0323c05_73": "萬德莊嚴。",
    "X72n1435_022:0323c06_74": "皆自心現量。",
    "X72n1435_022:0323c06_75": "悉無始已來善根之所成就。",
    "X72n1435_022:0323c06_76": "故云報圓極果豈非報。",
    "X72n1435_022:0323c07_77": "但因地中無求報之心耳。",
    "X72n1435_022:0323c07_78": "世間人所行善惡。",
    "X72n1435_022:0323c08_79": "毫髮不爽。",
    "X72n1435_022:0323c08_80": "昔西域一樵夫。",
    "X72n1435_022:0323c08_81": "賣柴於市中。",
    "X72n1435_022:0323c08_82": "逢一僧。",
    "X72n1435_022:0323c09_83": "將賣錢悉皆施與。",
    "X72n1435_022:0323c09_84": "遂此施心歡喜無量。",
    "X72n1435_022:0323c09_85": "行廿餘里。",
    "X72n1435_022:0323c10_86": "捨此報身。",
    "X72n1435_022:0323c10_87": "後生人道。",
    "X72n1435_022:0323c10_88": "為大富長者。",
    "X72n1435_022:0323c10_89": "其廿餘里。",
    "X72n1435_022:0323c10_90": "金銀寶藏。",
    "X72n1435_022:0323c11_91": "自然湧出。",
    "X72n1435_022:0323c11_92": "斯施利甚微。",
    "X72n1435_022:0323c11_93": "而施心勝故。",
    "X72n1435_022:0323c11_94": "感報亦勝。",
    "X72n1435_022:0323c12_0": "以此觀之。",
    "X72n1435_022:0323c12_1": "不求福報。",
    "X72n1435_022:0323c12_2": "不可不作福。",
    "X72n1435_022:0323c12_3": "如不作福。",
    "X72n1435_022:0323c12_4": "生世貧窮。",
    "X72n1435_022:0323c13_5": "為人役使。",
    "X72n1435_022:0323c13_6": "良可悲夫。",
    "X72n1435_022:0323c13_7": "或有引達磨大師。",
    "X72n1435_022:0323c13_8": "初見武帝時。",
    "X72n1435_022:0323c14_9": "帝問曰。",
    "X72n1435_022:0323c14_10": "朕即位已來。",
    "X72n1435_022:0323c14_11": "造寺寫經度僧。",
    "X72n1435_022:0323c14_12": "不可勝紀。",
    "X72n1435_022:0323c14_13": "有何功德。",
    "X72n1435_022:0323c15_14": "祖曰。",
    "X72n1435_022:0323c15_15": "並無功德。",
    "X72n1435_022:0323c15_16": "帝曰。",
    "X72n1435_022:0323c15_17": "何以無功德。",
    "X72n1435_022:0323c15_18": "祖曰。",
    "X72n1435_022:0323c15_19": "此但人天小果。",
    "X72n1435_022:0323c16_20": "有漏之因。",
    "X72n1435_022:0323c16_21": "如影隨形。",
    "X72n1435_022:0323c16_22": "雖有非實。",
    "X72n1435_022:0323c16_23": "帝曰。",
    "X72n1435_022:0323c16_24": "如何是真功德。",
    "X72n1435_022:0323c17_25": "祖曰。",
    "X72n1435_022:0323c17_26": "淨智玅圓。",
    "X72n1435_022:0323c17_27": "體自空寂。",
    "X72n1435_022:0323c17_28": "如是功德不以世求。",
    "X72n1435_022:0323c18_29": "斯皆深達法性入理之談。",
    "X72n1435_022:0323c18_30": "豈可以修行分中而廢其因果耶。",
    "X72n1435_022:0323c19_31": "如未成佛時。",
    "X72n1435_022:0323c19_32": "人天小果。",
    "X72n1435_022:0323c19_33": "而不修者。",
    "X72n1435_022:0323c19_34": "是智耶愚耶。",
    "X72n1435_022:0323c20_35": "國王大臣。",
    "X72n1435_022:0323c20_36": "人小果也。",
    "X72n1435_022:0323c20_37": "梵王帝釋。",
    "X72n1435_022:0323c20_38": "天小果也。",
    "X72n1435_022:0323c20_39": "此無殊因。",
    "X72n1435_022:0323c21_40": "焉有勝報。",
    "X72n1435_022:0323c21_41": "但隨業緣受之。",
    "X72n1435_022:0323c21_42": "非求報也。",
    "X72n1435_022:0323c21_43": "然自心之因。",
    "X72n1435_022:0323c22_44": "自心之果。",
    "X72n1435_022:0323c22_45": "如貪報地獄。",
    "X72n1435_022:0323c22_46": "嗔報餓鬼。",
    "X72n1435_022:0323c22_47": "癡報畜生。",
    "X72n1435_022:0323c22_48": "善惡相雜。",
    "X72n1435_022:0323c23_49": "報以修羅。",
    "X72n1435_022:0323c23_50": "五戒人身。",
    "X72n1435_022:0323c23_51": "十善天道。",
    "X72n1435_022:0323c23_52": "財施者捨慳貪而得富。",
    "X72n1435_022:0323c24_53": "法施者適機感以傳燈。",
    "X72n1435_022:0323c24_54": "此種種報緣。",
    "X72n1435_022:0323c24_55": "而有差別。",
    "X72n1435_022:0324a01_56": "非心外之境也。",
    "X72n1435_022:0324a02_0": "釋疑品第九",
    "X72n1435_022:0324a03_0": "問。",
    "X72n1435_022:0324a03_1": "信心不具。",
    "X72n1435_022:0324a03_2": "大愚癡暗。",
    "X72n1435_022:0324a03_3": "近復始信。",
    "X72n1435_022:0324a03_4": "終成破毀。",
    "X72n1435_022:0324a03_5": "此何義耶。",
    "X72n1435_022:0324a04_6": "良由業識易發現故。",
    "X72n1435_022:0324a04_7": "以何熏習而種善根。",
    "X72n1435_022:0324a04_8": "即如上所陳諸義。",
    "X72n1435_022:0324a05_9": "能堅行之。",
    "X72n1435_022:0324a05_10": "永不壞否。",
    "X72n1435_022:0324a06_0": "師云。",
    "X72n1435_022:0324a06_1": "不發信心。",
    "X72n1435_022:0324a06_2": "為障緣深故。",
    "X72n1435_022:0324a06_3": "如住世間者。",
    "X72n1435_022:0324a06_4": "自言我得安身法。",
    "X72n1435_022:0324a07_5": "不必天地之葢載。",
    "X72n1435_022:0324a07_6": "陰陽所運行。",
    "X72n1435_022:0324a07_7": "非癡暗而何。",
    "X72n1435_022:0324a08_0": "佛統華藏世界。",
    "X72n1435_022:0324a08_1": "如日月照臨。",
    "X72n1435_022:0324a08_2": "十二類眾生。",
    "X72n1435_022:0324a08_3": "皆生於此。",
    "X72n1435_022:0324a09_0": "長於此。",
    "X72n1435_022:0324a09_1": "佛以慈光。",
    "X72n1435_022:0324a09_2": "照眾生故。",
    "X72n1435_022:0324a09_3": "佛以悲心。",
    "X72n1435_022:0324a09_4": "及眾生故。",
    "X72n1435_022:0324a09_5": "而不信有佛。",
    "X72n1435_022:0324a10_6": "是報恩乎。",
    "X72n1435_022:0324a10_7": "是背恩乎。",
    "X72n1435_022:0324a10_8": "直饒不生信。",
    "X72n1435_022:0324a10_9": "不信因果。",
    "X72n1435_022:0324a11_10": "不信報應。",
    "X72n1435_022:0324a11_11": "不信有佛。",
    "X72n1435_022:0324a11_12": "墮地獄。",
    "X72n1435_022:0324a11_13": "生餓鬼。",
    "X72n1435_022:0324a11_14": "於畜生道中。",
    "X72n1435_022:0324a12_0": "千萬億劫。",
    "X72n1435_022:0324a12_1": "跳出不可思不可議世界之外。",
    "X72n1435_022:0324a12_2": "又何曾出得世尊化育中耶。",
    "X72n1435_022:0324a13_3": "或始信者。",
    "X72n1435_022:0324a13_4": "藉少善因。",
    "X72n1435_022:0324a13_5": "終毀者。",
    "X72n1435_022:0324a13_6": "惡緣障故。",
    "X72n1435_022:0324a14_7": "欲潔而偏染。",
    "X72n1435_022:0324a14_8": "欲進而偏退。",
    "X72n1435_022:0324a14_9": "非淨白心體有染退義。",
    "X72n1435_022:0324a15_10": "是熏習障緣。",
    "X72n1435_022:0324a15_11": "出種種邪見。",
    "X72n1435_022:0324a15_12": "以邪見故。",
    "X72n1435_022:0324a15_13": "而生退毀。",
    "X72n1435_022:0324a15_14": "退毀有二種義。",
    "X72n1435_022:0324a16_15": "一者因退。",
    "X72n1435_022:0324a16_16": "失信心。",
    "X72n1435_022:0324a16_17": "自慚自愧。",
    "X72n1435_022:0324a16_18": "自羞自恥。",
    "X72n1435_022:0324a17_0": "遇同法門行道者。",
    "X72n1435_022:0324a17_1": "不欲見之。",
    "X72n1435_022:0324a17_2": "二者繇慚愧故。",
    "X72n1435_022:0324a17_3": "遮掩羞恥。",
    "X72n1435_022:0324a18_4": "而生毀謗。",
    "X72n1435_022:0324a18_5": "或云。",
    "X72n1435_022:0324a18_6": "至道渺茫。",
    "X72n1435_022:0324a18_7": "無所見故。",
    "X72n1435_022:0324a18_8": "或云。",
    "X72n1435_022:0324a18_9": "諸佛菩薩過去已久。",
    "X72n1435_022:0324a19_10": "今歸向者是虗設故。",
    "X72n1435_022:0324a19_11": "或云。",
    "X72n1435_022:0324a19_12": "主法者不清淨。",
    "X72n1435_022:0324a20_13": "自不清淨。",
    "X72n1435_022:0324a20_14": "云何教人。",
    "X72n1435_022:0324a20_15": "或云。",
    "X72n1435_022:0324a20_16": "清廉之士應見富饒。",
    "X72n1435_022:0324a20_17": "而貧窮故。",
    "X72n1435_022:0324a21_18": "行善之人應見順適。",
    "X72n1435_022:0324a21_19": "而轗軻故。",
    "X72n1435_022:0324a21_20": "貪婪之徒應見貧窮。",
    "X72n1435_022:0324a22_21": "而富饒故。",
    "X72n1435_022:0324a22_22": "行惡之者應見轗軻。",
    "X72n1435_022:0324a22_23": "而順適故。",
    "X72n1435_022:0324a22_24": "以此四種。",
    "X72n1435_022:0324a23_25": "生疑生謗。",
    "X72n1435_022:0324a23_26": "使惡法流行。",
    "X72n1435_022:0324a23_27": "善門掩閉。",
    "X72n1435_022:0324a23_28": "殊不知。",
    "X72n1435_022:0324a23_29": "道不遠人。",
    "X72n1435_022:0324a24_30": "而人自遠。",
    "X72n1435_022:0324a24_31": "非渺茫故。",
    "X72n1435_022:0324a24_32": "又當知。",
    "X72n1435_022:0324a24_33": "人人具有佛性。",
    "X72n1435_022:0324b01_0": "六根門頭放光動地。",
    "X72n1435_022:0324b01_1": "又云。",
    "X72n1435_022:0324b01_2": "菩薩清涼月。",
    "X72n1435_022:0324b01_3": "常遊畢竟空。",
    "X72n1435_022:0324b02_0": "眾生心水淨。",
    "X72n1435_022:0324b02_1": "菩提影現中。",
    "X72n1435_022:0324b02_2": "傅大士偈云。",
    "X72n1435_022:0324b02_3": "夜夜抱佛眠。",
    "X72n1435_022:0324b03_0": "朝朝還共起。",
    "X72n1435_022:0324b03_1": "起坐鎮相隨。",
    "X72n1435_022:0324b03_2": "語默同居止。",
    "X72n1435_022:0324b03_3": "終日不曾離。",
    "X72n1435_022:0324b04_0": "如身影相似。",
    "X72n1435_022:0324b04_1": "欲識佛去處。",
    "X72n1435_022:0324b04_2": "祇者語聲是。",
    "X72n1435_022:0324b04_3": "以此觀之。",
    "X72n1435_022:0324b04_4": "佛菩薩現在。",
    "X72n1435_022:0324b05_5": "非久滅度故。",
    "X72n1435_022:0324b05_6": "主法者自不清淨。",
    "X72n1435_022:0324b05_7": "皆自不清淨。",
    "X72n1435_022:0324b06_8": "而見他人不清淨故。",
    "X72n1435_022:0324b06_9": "豈不見。",
    "X72n1435_022:0324b06_10": "六祖大師云。",
    "X72n1435_022:0324b06_11": "若真修道人。",
    "X72n1435_022:0324b07_12": "不見世間過。",
    "X72n1435_022:0324b07_13": "又云。",
    "X72n1435_022:0324b07_14": "他非我不非。",
    "X72n1435_022:0324b07_15": "我非却是左。",
    "X72n1435_022:0324b07_16": "若果是道人。",
    "X72n1435_022:0324b08_17": "如同學百人中。",
    "X72n1435_022:0324b08_18": "以最善慧者為師故。",
    "X72n1435_022:0324b08_19": "如同輩中無人。",
    "X72n1435_022:0324b09_20": "以住持法門為師故。",
    "X72n1435_022:0324b09_21": "如住持無人。",
    "X72n1435_022:0324b09_22": "以天下善知識為師故。",
    "X72n1435_022:0324b10_23": "如天下善知識中無人。",
    "X72n1435_022:0324b10_24": "以釋迦老子為師故。",
    "X72n1435_022:0324b11_25": "釋迦佛是主法者。",
    "X72n1435_022:0324b11_26": "是清淨者。",
    "X72n1435_022:0324b11_27": "當無疑惑。",
    "X72n1435_022:0324b11_28": "思之可見。",
    "X72n1435_022:0324b12_29": "又廉者貧而善者轗軻。",
    "X72n1435_022:0324b12_30": "貪者富而惡者順適。",
    "X72n1435_022:0324b12_31": "以三世推之。",
    "X72n1435_022:0324b13_32": "絲髮不爽。",
    "X72n1435_022:0324b13_33": "豈但三世。",
    "X72n1435_022:0324b13_34": "千萬劫之上下。",
    "X72n1435_022:0324b13_35": "亦有報也。",
    "X72n1435_022:0324b15_0": "昔阿難尊者病癰疽。",
    "X72n1435_022:0324b15_1": "大眾驚疑。",
    "X72n1435_022:0324b15_2": "佛命醫者剖開。",
    "X72n1435_022:0324b15_3": "以藥敷治。",
    "X72n1435_022:0324b16_4": "仍說多劫中因緣。",
    "X72n1435_022:0324b16_5": "示之以偈曰。",
    "X72n1435_022:0324b16_6": "假使經百劫。",
    "X72n1435_022:0324b16_7": "所造業不忘。",
    "X72n1435_022:0324b17_8": "因緣會遇時。",
    "X72n1435_022:0324b17_9": "果報還自受。",
    "X72n1435_022:0324b17_10": "又五通僊人受報偈曰。",
    "X72n1435_022:0324b18_11": "非空非海中。",
    "X72n1435_022:0324b18_12": "非入山石間。",
    "X72n1435_022:0324b18_13": "無有地方所。",
    "X72n1435_022:0324b18_14": "脫之不受報。",
    "X72n1435_022:0324b19_15": "以此則知。",
    "X72n1435_022:0324b19_16": "清廉受貧。",
    "X72n1435_022:0324b19_17": "前生多慳悋故。",
    "X72n1435_022:0324b19_18": "善者不如意。",
    "X72n1435_022:0324b20_19": "前生多惡因故。",
    "X72n1435_022:0324b20_20": "貪者受富。",
    "X72n1435_022:0324b20_21": "前生多惠人故。",
    "X72n1435_022:0324b20_22": "惡者得順適。",
    "X72n1435_022:0324b21_23": "前生多和合人故。",
    "X72n1435_022:0324b21_24": "今生善惡貪廉。",
    "X72n1435_022:0324b21_25": "報之以將來。",
    "X72n1435_022:0324b22_26": "知是幾多劫數也。",
    "X72n1435_022:0324b22_27": "自退者。",
    "X72n1435_022:0324b22_28": "雖墮地獄。",
    "X72n1435_022:0324b22_29": "非罪猶輕。",
    "X72n1435_022:0324b22_30": "生毀謗而傷於法門者。",
    "X72n1435_022:0324b23_31": "生十方阿鼻地獄。",
    "X72n1435_022:0324b23_32": "世界壞。",
    "X72n1435_022:0324b23_33": "復寄他方地獄受苦。",
    "X72n1435_022:0324b24_34": "深可憐愍。",
    "X72n1435_022:0324b24_35": "悲夫。",
    "X72n1435_022:0324b24_36": "又云。",
    "X72n1435_022:0324b24_37": "業識易發現。",
    "X72n1435_022:0324b24_38": "以何熏習。",
    "X72n1435_022:0324c01_39": "而種善根者。",
    "X72n1435_022:0324c01_40": "以信向法門。",
    "X72n1435_022:0324c01_41": "是捨惡趣樂。",
    "X72n1435_022:0324c01_42": "最捷最徑。",
    "X72n1435_022:0324c02_43": "而種善根。",
    "X72n1435_022:0324c02_44": "信向三寶。",
    "X72n1435_022:0324c02_45": "有大慈故。",
    "X72n1435_022:0324c02_46": "愛惜眾生。",
    "X72n1435_022:0324c02_47": "有大悲故。",
    "X72n1435_022:0324c03_48": "救護眾生。",
    "X72n1435_022:0324c03_49": "而種善根。",
    "X72n1435_022:0324c03_50": "信善惡因果。",
    "X72n1435_022:0324c03_51": "如影隨形。",
    "X72n1435_022:0324c03_52": "必詶償故。",
    "X72n1435_022:0324c04_53": "而種善。",
    "X72n1435_022:0324c04_54": "根信諸大乘經典。",
    "X72n1435_022:0324c04_55": "必脫苦海。",
    "X72n1435_022:0324c04_56": "必到彼岸。",
    "X72n1435_022:0324c05_57": "而種善根。",
    "X72n1435_022:0324c05_58": "信念佛一門。",
    "X72n1435_022:0324c05_59": "必見佛必成佛。",
    "X72n1435_022:0324c05_60": "如下種喻。",
    "X72n1435_022:0324c06_0": "因真果真。",
    "X72n1435_022:0324c06_1": "必生淨土故。",
    "X72n1435_022:0324c06_2": "而種善根。",
    "X72n1435_022:0324c06_3": "信參禪必悟大理。",
    "X72n1435_022:0324c07_0": "必了生死。",
    "X72n1435_022:0324c07_1": "必脫輪迴。",
    "X72n1435_022:0324c07_2": "說法度人。",
    "X72n1435_022:0324c07_3": "無有窮已。",
    "X72n1435_022:0324c07_4": "諸善知識大有樣子故。",
    "X72n1435_022:0324c08_5": "而種善根。",
    "X72n1435_022:0324c08_6": "又果能具行上來所陳諸義。",
    "X72n1435_022:0324c09_0": "永不退輪。",
    "X72n1435_022:0324c09_1": "此現世即名肉身菩薩。",
    "X72n1435_022:0324c09_2": "諸天善神。",
    "X72n1435_022:0324c09_3": "常為之擁護。",
    "X72n1435_022:0324c10_4": "諸佛菩薩。",
    "X72n1435_022:0324c10_5": "常為之加庇。",
    "X72n1435_022:0324c10_6": "為人天眼目。",
    "X72n1435_022:0324c10_7": "為苦海舟師。",
    "X72n1435_022:0324c11_8": "凡有一言一句偈。",
    "X72n1435_022:0324c11_9": "投入有情八識田中。",
    "X72n1435_022:0324c11_10": "如食金剛喻。",
    "X72n1435_022:0324c12_11": "肚腸穿壞。",
    "X72n1435_022:0324c12_12": "金剛不壞。",
    "X72n1435_022:0324c12_13": "況自有壞乎。",
    "X72n1435_022:0324c12_14": "凡有疑者。",
    "X72n1435_022:0324c12_15": "教中喻曰猶豫。",
    "X72n1435_022:0324c13_16": "其猶豫之心。",
    "X72n1435_022:0324c13_17": "疑自疑他。",
    "X72n1435_022:0324c13_18": "能障道故。",
    "X72n1435_022:0324c13_19": "疑自者。",
    "X72n1435_022:0324c14_0": "謂根機劣弱。",
    "X72n1435_022:0324c14_1": "難以入道。",
    "X72n1435_022:0324c14_2": "殊不知。",
    "X72n1435_022:0324c14_3": "衣中之寶。",
    "X72n1435_022:0324c14_4": "肘後之符。",
    "X72n1435_022:0324c15_0": "彼既丈夫。",
    "X72n1435_022:0324c15_1": "我胡不爾。",
    "X72n1435_022:0324c15_2": "疑他者。",
    "X72n1435_022:0324c15_3": "當信諸佛法教。",
    "X72n1435_022:0324c15_4": "皆真實語。",
    "X72n1435_022:0324c16_5": "見聞思者。",
    "X72n1435_022:0324c16_6": "深入法趣。",
    "X72n1435_022:0324c16_7": "以四攝法。",
    "X72n1435_022:0324c16_8": "廣度眾生。",
    "X72n1435_022:0324c16_9": "達法性空。",
    "X72n1435_022:0324c17_10": "無眾生可度者。",
    "X72n1435_022:0324c17_11": "是入金剛三昧也。",
    "X72n1435_022:0324c18_0": "回向品第十",
    "X72n1435_022:0324c19_0": "問。",
    "X72n1435_022:0324c19_1": "萬法歸一。",
    "X72n1435_022:0324c19_2": "是大總持。",
    "X72n1435_022:0324c19_3": "以上諸門。",
    "X72n1435_022:0324c19_4": "方便究竟淺深大小。",
    "X72n1435_022:0324c20_5": "為不同耶。",
    "X72n1435_022:0324c20_6": "併乞慈旨。",
    "X72n1435_022:0324c20_7": "說回向義。",
    "X72n1435_022:0324c21_0": "師云。",
    "X72n1435_022:0324c21_1": "萬法歸一。",
    "X72n1435_022:0324c21_2": "是大總持。",
    "X72n1435_022:0324c21_3": "謂一法總持一大藏教。",
    "X72n1435_022:0324c21_4": "如佛所說八萬四千法門。",
    "X72n1435_022:0324c22_5": "當求一門深入。",
    "X72n1435_022:0324c22_6": "以一門故。",
    "X72n1435_022:0324c22_7": "攝一切法。",
    "X72n1435_022:0324c23_8": "故云。",
    "X72n1435_022:0324c23_9": "一字法門海墨書而不盡也。",
    "X72n1435_022:0324c23_10": "以上諸門。",
    "X72n1435_022:0324c24_0": "雖方便究竟淺深大小不等。",
    "X72n1435_022:0324c24_1": "只將一句話頭。",
    "X72n1435_022:0324c24_2": "真參實究。",
    "X72n1435_022:0325a01_3": "一切法門無不收盡。",
    "X72n1435_022:0325a01_4": "參禪徹法身真理。",
    "X72n1435_022:0325a01_5": "法身理者。",
    "X72n1435_022:0325a02_0": "無分齊故。",
    "X72n1435_022:0325a02_1": "欲生淨土。",
    "X72n1435_022:0325a02_2": "而淨土居法身之外乎。",
    "X72n1435_022:0325a02_3": "欲究向上一事。",
    "X72n1435_022:0325a03_4": "知毗盧有師。",
    "X72n1435_022:0325a03_5": "法身有主。",
    "X72n1435_022:0325a03_6": "離佛而求師主者。",
    "X72n1435_022:0325a03_7": "是大不然。",
    "X72n1435_022:0325a04_8": "念佛而求見佛。",
    "X72n1435_022:0325a04_9": "亦觀機之說。",
    "X72n1435_022:0325a04_10": "殊不知通身是佛。",
    "X72n1435_022:0325a05_11": "舊佛新成。",
    "X72n1435_022:0325a05_12": "念佛見佛之義顯矣。",
    "X72n1435_022:0325a05_13": "而不名念佛。",
    "X72n1435_022:0325a05_14": "意在向上一路也。",
    "X72n1435_022:0325a06_15": "坐斷十方。",
    "X72n1435_022:0325a06_16": "而不名淨土者。",
    "X72n1435_022:0325a06_17": "意在密移一步也。",
    "X72n1435_022:0325a07_18": "如究理之人。",
    "X72n1435_022:0325a07_19": "念不分散。",
    "X72n1435_022:0325a07_20": "不但不分散。",
    "X72n1435_022:0325a07_21": "而逼拶入理。",
    "X72n1435_022:0325a08_22": "念不生故。",
    "X72n1435_022:0325a08_23": "諸念不生。",
    "X72n1435_022:0325a08_24": "豈非止耶。",
    "X72n1435_022:0325a08_25": "全身入理。",
    "X72n1435_022:0325a08_26": "心境曠然。",
    "X72n1435_022:0325a09_27": "豈非觀耶。",
    "X72n1435_022:0325a09_28": "具足止觀二法。",
    "X72n1435_022:0325a09_29": "而不名止觀。",
    "X72n1435_022:0325a09_30": "意在禪那也。",
    "X72n1435_022:0325a10_31": "又諸念不生。",
    "X72n1435_022:0325a10_32": "惡無繇起。",
    "X72n1435_022:0325a10_33": "惡既不起。",
    "X72n1435_022:0325a10_34": "豈非戒乎。",
    "X72n1435_022:0325a10_35": "全身是戒。",
    "X72n1435_022:0325a11_36": "而不名戒者。",
    "X72n1435_022:0325a11_37": "謂無所犯而曰持。",
    "X72n1435_022:0325a11_38": "是好肉剜瘡也。",
    "X72n1435_022:0325a12_0": "身不我有。",
    "X72n1435_022:0325a12_1": "求其根塵器界。",
    "X72n1435_022:0325a12_2": "了不可得。",
    "X72n1435_022:0325a12_3": "將誰為能施。",
    "X72n1435_022:0325a12_4": "孰為所施。",
    "X72n1435_022:0325a13_5": "既無能所。",
    "X72n1435_022:0325a13_6": "亦無身外眾生而受施者。",
    "X72n1435_022:0325a13_7": "而來乞者。",
    "X72n1435_022:0325a14_8": "又云。",
    "X72n1435_022:0325a14_9": "見色非干色。",
    "X72n1435_022:0325a14_10": "眼布施也。",
    "X72n1435_022:0325a14_11": "聞聲不是聲。",
    "X72n1435_022:0325a14_12": "耳布施也。",
    "X72n1435_022:0325a15_13": "香臭不交。",
    "X72n1435_022:0325a15_14": "鼻布施也。",
    "X72n1435_022:0325a15_15": "噉不知味。",
    "X72n1435_022:0325a15_16": "舌布施也。",
    "X72n1435_022:0325a15_17": "無男女之分。",
    "X72n1435_022:0325a16_18": "無澀滑之相。",
    "X72n1435_022:0325a16_19": "身布施也。",
    "X72n1435_022:0325a16_20": "理無明徹。",
    "X72n1435_022:0325a16_21": "心不外緣。",
    "X72n1435_022:0325a16_22": "意布施也。",
    "X72n1435_022:0325a17_23": "廢寢忘餐。",
    "X72n1435_022:0325a17_24": "不惜身命。",
    "X72n1435_022:0325a17_25": "全正報布施也。",
    "X72n1435_022:0325a17_26": "心外無境。",
    "X72n1435_022:0325a18_27": "法戒理成。",
    "X72n1435_022:0325a18_28": "全依報布施也。",
    "X72n1435_022:0325a18_29": "然不名布施者。",
    "X72n1435_022:0325a18_30": "謂諸法實相。",
    "X72n1435_022:0325a19_31": "無能所施之心也。",
    "X72n1435_022:0325a19_32": "發大勇猛。",
    "X72n1435_022:0325a19_33": "苦樂不受。",
    "X72n1435_022:0325a19_34": "寒暑不遷。",
    "X72n1435_022:0325a20_35": "直究根源。",
    "X72n1435_022:0325a20_36": "以期大悟。",
    "X72n1435_022:0325a20_37": "期者願也。",
    "X72n1435_022:0325a20_38": "勇者力也。",
    "X72n1435_022:0325a20_39": "其願者。",
    "X72n1435_022:0325a21_0": "雖百千障。",
    "X72n1435_022:0325a21_1": "而不能退屈也。",
    "X72n1435_022:0325a21_2": "其勇者。",
    "X72n1435_022:0325a21_3": "雖魔外侵擾。",
    "X72n1435_022:0325a21_4": "而不能折伏也。",
    "X72n1435_022:0325a22_5": "自非願力堅持。",
    "X72n1435_022:0325a22_6": "安能成箇銅頭鐵額底漢子。",
    "X72n1435_022:0325a23_7": "而不名願力者。",
    "X72n1435_022:0325a23_8": "是居正法而不彰導引赤幟也。",
    "X72n1435_022:0325a23_9": "如肯心力究。",
    "X72n1435_022:0325a24_10": "是大福人。",
    "X72n1435_022:0325a24_11": "非世間福可比也。",
    "X72n1435_022:0325a24_12": "不求天樂。",
    "X72n1435_022:0325a24_13": "非梵王福可比也。",
    "X72n1435_022:0325b01_14": "通身福緣。",
    "X72n1435_022:0325b01_15": "過三禪天樂。",
    "X72n1435_022:0325b01_16": "如入大海者。",
    "X72n1435_022:0325b02_0": "通身是水。",
    "X72n1435_022:0325b02_1": "而不別求水。",
    "X72n1435_022:0325b02_2": "參禪者。",
    "X72n1435_022:0325b02_3": "通身是福所資持。",
    "X72n1435_022:0325b02_4": "而不別求福。",
    "X72n1435_022:0325b03_5": "謂其福利廣也大也。",
    "X72n1435_022:0325b03_6": "而不名福報者。",
    "X72n1435_022:0325b03_7": "如宴居者。",
    "X72n1435_022:0325b04_8": "忘情絕念。",
    "X72n1435_022:0325b04_9": "不見有身。",
    "X72n1435_022:0325b04_10": "又豈曰身調適。",
    "X72n1435_022:0325b04_11": "參禪人是大福報。",
    "X72n1435_022:0325b05_12": "又豈別曰福報也。",
    "X72n1435_022:0325b05_13": "信此一句話頭。",
    "X72n1435_022:0325b05_14": "是出生死關鍵。",
    "X72n1435_022:0325b06_15": "破塵勞利器。",
    "X72n1435_022:0325b06_16": "而諸疑盡釋。",
    "X72n1435_022:0325b06_17": "又豈待別釋疑乎。",
    "X72n1435_022:0325b06_18": "將此一字法。",
    "X72n1435_022:0325b07_19": "不為己求。",
    "X72n1435_022:0325b07_20": "總皆回向大地中幻化有情。",
    "X72n1435_022:0325b07_21": "同登覺岸。",
    "X72n1435_022:0325b08_22": "此禪正意也。",
    "X72n1435_022:0325b08_23": "行願品中說回向意。",
    "X72n1435_022:0325b08_24": "經云。",
    "X72n1435_022:0325b08_25": "從初禮拜。",
    "X72n1435_022:0325b09_26": "乃至隨順所有功德。",
    "X72n1435_022:0325b09_27": "皆悉回向盡法界虗空界一切眾生。",
    "X72n1435_022:0325b10_28": "願令眾生。",
    "X72n1435_022:0325b10_29": "常得安樂。",
    "X72n1435_022:0325b10_30": "無諸病苦。",
    "X72n1435_022:0325b10_31": "欲行惡法。",
    "X72n1435_022:0325b11_0": "皆悉不成。",
    "X72n1435_022:0325b11_1": "所修善法。",
    "X72n1435_022:0325b11_2": "皆速成就。",
    "X72n1435_022:0325b11_3": "關閉一切諸惡趣門。",
    "X72n1435_022:0325b12_0": "開示人天涅槃正路。",
    "X72n1435_022:0325b12_1": "此回向願力。",
    "X72n1435_022:0325b12_2": "則橫遍竪窮。",
    "X72n1435_022:0325b12_3": "同志者。",
    "X72n1435_022:0325b13_4": "當勇猛。",
    "X72n1435_022:0325b13_5": "以所修善根。",
    "X72n1435_022:0325b13_6": "回向於大地眾生。",
    "X72n1435_022:0325b13_7": "不可生懈惰想。",
    "X72n1435_022:0325b14_8": "諸菩薩見眾生苦惱。",
    "X72n1435_022:0325b14_9": "以身代受。",
    "X72n1435_022:0325b14_10": "況惜自己善根耶。",
    "X72n1435_022:0325b15_11": "經云。",
    "X72n1435_022:0325b15_12": "若諸眾生。",
    "X72n1435_022:0325b15_13": "因其積集諸惡業故。",
    "X72n1435_022:0325b15_14": "所感一切極重苦果。",
    "X72n1435_022:0325b16_15": "我皆代受。",
    "X72n1435_022:0325b16_16": "令彼眾生悉得解脫。",
    "X72n1435_022:0325b16_17": "究竟成就無上菩提。",
    "X72n1435_022:0325b17_18": "代受者。",
    "X72n1435_022:0325b17_19": "與物為增上緣。",
    "X72n1435_022:0325b17_20": "或留惑潤生。",
    "X72n1435_022:0325b17_21": "受有苦身。",
    "X72n1435_022:0325b18_22": "為物說法。",
    "X72n1435_022:0325b18_23": "令不造惡。",
    "X72n1435_022:0325b18_24": "因亡果喪。",
    "X72n1435_022:0325b18_25": "即名為代。",
    "X72n1435_022:0325b18_26": "是菩薩以善根回向。",
    "X72n1435_022:0325b19_27": "利有情故。",
    "X72n1435_022:0325b19_28": "使彼離苦趨樂。",
    "X72n1435_022:0325b19_29": "非以現身代眾生受苦。",
    "X72n1435_022:0325b20_30": "縱代之。",
    "X72n1435_022:0325b20_31": "又安能普利耶。",
    "X72n1435_022:0325b20_32": "若菩薩為眾生說法。",
    "X72n1435_022:0325b21_33": "了蘊界空寂。",
    "X72n1435_022:0325b21_34": "惡無繇生。",
    "X72n1435_022:0325b21_35": "求其生相。",
    "X72n1435_022:0325b21_36": "亦不可得。",
    "X72n1435_022:0325b21_37": "或頓入圓明。",
    "X72n1435_022:0325b22_38": "遠離地獄餓鬼等。",
    "X72n1435_022:0325b22_39": "菩薩有大願力故。",
    "X72n1435_022:0325b22_40": "即名普代眾生苦也。",
    "X72n1435_022:0325b23_41": "又回向者。",
    "X72n1435_022:0325b23_42": "必須先有所修善根。",
    "X72n1435_022:0325b23_43": "將自己所修善根。",
    "X72n1435_022:0325b24_44": "回向於大地有情。",
    "X72n1435_022:0325b24_45": "同離苦趣。",
    "X72n1435_022:0325b24_46": "同生淨土。",
    "X72n1435_022:0325b24_47": "同成佛道也。",
    "X72n1435_022:0325c01_48": "或但願自利之事。",
    "X72n1435_022:0325c01_49": "似不必回向。",
    "X72n1435_022:0325c01_50": "我自未種善根。",
    "X72n1435_022:0325c02_51": "欲利生。",
    "X72n1435_022:0325c02_52": "亦當以願力相資。",
    "X72n1435_022:0325c02_53": "願與回向。",
    "X72n1435_022:0325c02_54": "合一之道。",
    "X72n1435_022:0325c03_0": "無分別也。",
    "X72n1435_022:0325c03_1": "復以此流布居士所問博山所答。",
    "X72n1435_022:0325c03_2": "悉如夢幻。",
    "X72n1435_022:0325c04_3": "無能所故。",
    "X72n1435_022:0325c04_4": "以無能所善根。",
    "X72n1435_022:0325c04_5": "普皆回向大地中夢幻有情。",
    "X72n1435_022:0325c05_6": "同成佛道。",
    "X72n1435_022:0325c05_7": "同入無餘涅槃。",
    "X72n1435_022:0325c05_8": "十類眾生滅度盡。",
    "X72n1435_022:0325c05_9": "而不見有滅度之者。",
    "X72n1435_022:0325c06_10": "方入斯羅陀尼法門無盡藏三昧也。",
    "X72n1435_022:0325c09_0": "無異禪師廣錄卷第二十二"
}