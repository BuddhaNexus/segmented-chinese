[
    {
        "source_sentence": "佛說大乘聖無量壽決定光明",
        "from": "T19n0937_001:0085a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王如來陀羅尼經",
        "from": "T19n0937_001:0085a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天中印度摩伽陀國那",
        "from": "T19n0937_001:0085a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爛陀寺傳教大師三藏賜紫沙門臣法天奉　詔譯如是我聞。",
        "from": "T19n0937_001:0085a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊。",
        "from": "T19n0937_001:0085a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在舍衛國祇樹給孤獨園。",
        "from": "T19n0937_001:0085a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大苾芻眾千二百五十人俱。",
        "from": "T19n0937_001:0085a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是漏盡意解無復煩惱。",
        "from": "T19n0937_001:0085a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逮得己利心善解脫。",
        "from": "T19n0937_001:0085a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾所知識大阿羅漢。",
        "from": "T19n0937_001:0085a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有智慧廣大功德。",
        "from": "T19n0937_001:0085a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴威儀具足諸尊。",
        "from": "T19n0937_001:0085a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩等。",
        "from": "T19n0937_001:0085a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為聞法故皆悉來集。",
        "from": "T19n0937_001:0085a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於眾會中有大慧妙吉祥菩薩摩訶薩而為上首。",
        "from": "T19n0937_001:0085a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦牟尼佛。",
        "from": "T19n0937_001:0085a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍念未來世中一切短命眾生。",
        "from": "T19n0937_001:0085a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令增壽命得大利益。",
        "from": "T19n0937_001:0085a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說不可思議祕密甚深微妙勝法。",
        "from": "T19n0937_001:0085a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時。",
        "from": "T19n0937_001:0085a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊告大慧妙吉祥菩薩言。",
        "from": "T19n0937_001:0085a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等諦聽。",
        "from": "T19n0937_001:0085a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是南閻浮提。",
        "from": "T19n0937_001:0085a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方過無量佛土。",
        "from": "T19n0937_001:0085a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有世界名無量功德藏。",
        "from": "T19n0937_001:0085a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土嚴麗眾寶間飾。",
        "from": "T19n0937_001:0085a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨殊勝安隱快樂。",
        "from": "T19n0937_001:0085a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超過十方微妙第一。",
        "from": "T19n0937_001:0085a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼無量功德藏世界之中。",
        "from": "T19n0937_001:0085a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛名無量壽決定光明王如來無上正等菩提。",
        "from": "T19n0937_001:0085a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今現住彼世界之中。",
        "from": "T19n0937_001:0085a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起大慈悲為諸眾生演說妙法。",
        "from": "T19n0937_001:0085a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令獲殊勝利益安樂。",
        "from": "T19n0937_001:0085a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛復告妙吉祥菩薩言。",
        "from": "T19n0937_001:0085a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此閻浮提世界中人壽命百歲。",
        "from": "T19n0937_001:0085a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中多有造諸惡業而復中夭。",
        "from": "T19n0937_001:0085a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥菩薩若有眾生。",
        "from": "T19n0937_001:0085b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得見此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德殊勝及聞名號。",
        "from": "T19n0937_001:0085b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自書寫若教他人書是經竟。",
        "from": "T19n0937_001:0085b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於自舍宅或於高樓。",
        "from": "T19n0937_001:0085b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或安精舍殿堂之中。",
        "from": "T19n0937_001:0085b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦遵奉禮拜。",
        "from": "T19n0937_001:0085b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種妙華燒香粖香。",
        "from": "T19n0937_001:0085b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香華鬘等。",
        "from": "T19n0937_001:0085b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是短壽之人。",
        "from": "T19n0937_001:0085b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能志心書寫受持。",
        "from": "T19n0937_001:0085b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦供養禮拜。",
        "from": "T19n0937_001:0085b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人復增壽命滿於百歲。",
        "from": "T19n0937_001:0085b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次妙吉祥菩薩。",
        "from": "T19n0937_001:0085b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生聞是無量壽決定光明王如來名號。",
        "from": "T19n0937_001:0085b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能志心稱念一百八遍。",
        "from": "T19n0937_001:0085b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此短命眾生復增壽命。",
        "from": "T19n0937_001:0085b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或但聞其名號。",
        "from": "T19n0937_001:0085b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心信受遵崇之者。",
        "from": "T19n0937_001:0085b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人亦得增益壽命。",
        "from": "T19n0937_001:0085b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次妙吉祥菩薩。",
        "from": "T19n0937_001:0085b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有恒時心無暫捨。",
        "from": "T19n0937_001:0085b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志誠思求妙法。",
        "from": "T19n0937_001:0085b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子善女人等汝應諦聽。",
        "from": "T19n0937_001:0085b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為說無量壽決定光明王如來一百八名陀羅尼曰。",
        "from": "T19n0937_001:0085b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引婆去誐嚩無可反帝阿播哩弭跢引愈轉舌霓野二合曩素上尾𡫸寧吉反室止二合怛帝𭉷仁祖反囉引惹仁佐反野怛他引誐哆引野引囉賀二合帝三去麼藥二合訖三二合沒馱引野怛儞也二合他去唵引薩慱舌呼嚩無可反僧塞迦二合引囉波哩舜馱達他割反㗚麼二合帝誐誐曩三去母努蘖二合帝娑嚩二合短呼婆去引嚩尾舜弟麼賀引曩野波哩嚩引黎娑嚩二合引賀引妙吉祥菩薩。",
        "from": "T19n0937_001:0085b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量壽決定光明王如來一百八名陀羅尼。",
        "from": "T19n0937_001:0085b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人躬自書寫。",
        "from": "T19n0937_001:0085b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或教他人書是陀羅尼。",
        "from": "T19n0937_001:0085b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置高樓之上。",
        "from": "T19n0937_001:0085b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或殿堂內清淨之處。",
        "from": "T19n0937_001:0085b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法嚴飾種種供養。",
        "from": "T19n0937_001:0085b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "短命之人復得長壽滿足百歲。",
        "from": "T19n0937_001:0085c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人於後此處命終。",
        "from": "T19n0937_001:0085c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便得往生於彼無量壽決定光明王如來佛剎無量功德藏世界之中。",
        "from": "T19n0937_001:0085c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當釋迦牟尼佛。",
        "from": "T19n0937_001:0085c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此無量壽決定光明王如來陀羅尼經時。",
        "from": "T19n0937_001:0085c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有九十九俱胝佛。",
        "from": "T19n0937_001:0085c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心異口同音。",
        "from": "T19n0937_001:0085c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有八十四俱胝佛。",
        "from": "T19n0937_001:0085c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心異口同音。",
        "from": "T19n0937_001:0085c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有七十七俱胝佛。",
        "from": "T19n0937_001:0085c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心異口同音。",
        "from": "T19n0937_001:0085c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有六十六俱胝佛。",
        "from": "T19n0937_001:0085c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心異口同音。",
        "from": "T19n0937_001:0085c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有五十五俱胝佛。",
        "from": "T19n0937_001:0085c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心異口同音。",
        "from": "T19n0937_001:0085c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有四十四俱胝佛。",
        "from": "T19n0937_001:0085c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心異口同音。",
        "from": "T19n0937_001:0085c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有三十六俱胝佛。",
        "from": "T19n0937_001:0085c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心異口同音。",
        "from": "T19n0937_001:0085c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有二十五俱胝佛。",
        "from": "T19n0937_001:0085c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心異口同音。",
        "from": "T19n0937_001:0085c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有十殑伽河沙數俱胝佛。",
        "from": "T19n0937_001:0085c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各心無差別異口同音。",
        "from": "T19n0937_001:0085c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦皆說此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼經。",
        "from": "T19n0937_001:0085c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人若自書若教人書。",
        "from": "T19n0937_001:0085c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人於後。",
        "from": "T19n0937_001:0085c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮地獄不墮餓鬼不墮畜生。",
        "from": "T19n0937_001:0085c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮閻羅王界業道冥官。",
        "from": "T19n0937_001:0085c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不於是諸惡道中受其惡報。",
        "from": "T19n0937_001:0085c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人由是書寫此無量壽決定光明王如來陀羅尼經功德力故。",
        "from": "T19n0937_001:0085c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於後一切生處。",
        "from": "T19n0937_001:0085c27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生世世得宿命智。",
        "from": "T19n0937_001:0085c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0085c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自書若教人書。",
        "from": "T19n0937_001:0085c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人則同書寫八萬四千法藏。",
        "from": "T19n0937_001:0086a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲功德而無有異。",
        "from": "T19n0937_001:0086a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人若自書若教人書。",
        "from": "T19n0937_001:0086a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人便同修建八萬四千寶塔。",
        "from": "T19n0937_001:0086a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲功德而無有異。",
        "from": "T19n0937_001:0086a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自書若教人書。",
        "from": "T19n0937_001:0086a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人若有五無間地獄之業。",
        "from": "T19n0937_001:0086a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是功德力故。",
        "from": "T19n0937_001:0086a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其業皆悉消除。",
        "from": "T19n0937_001:0086a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自書若教人書。",
        "from": "T19n0937_001:0086a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人不墮魔王及魔眷屬。",
        "from": "T19n0937_001:0086a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮藥叉羅剎道中。",
        "from": "T19n0937_001:0086a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮非橫死亡。",
        "from": "T19n0937_001:0086a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不受是諸惡果報。",
        "from": "T19n0937_001:0086a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自書若教人書。",
        "from": "T19n0937_001:0086a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人臨命終時。",
        "from": "T19n0937_001:0086a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有九十九俱胝佛。",
        "from": "T19n0937_001:0086a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面現其前來迎是人。",
        "from": "T19n0937_001:0086a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往生於彼佛國土中。",
        "from": "T19n0937_001:0086a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等勿生疑惑。",
        "from": "T19n0937_001:0086a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自書若教人書。",
        "from": "T19n0937_001:0086a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人當來永不受其女人之身。",
        "from": "T19n0937_001:0086a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自書若教人書。",
        "from": "T19n0937_001:0086a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人常得東方彥達嚩主持國天王。",
        "from": "T19n0937_001:0086a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方矩伴拏主增長天王。",
        "from": "T19n0937_001:0086a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方大龍主廣目天王。",
        "from": "T19n0937_001:0086a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方大藥叉主多聞天王。",
        "from": "T19n0937_001:0086a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密隱其身隨逐衛護。",
        "from": "T19n0937_001:0086a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人為於此經。",
        "from": "T19n0937_001:0086a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以少分財寶布施之者。",
        "from": "T19n0937_001:0086a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人便同以三千大千世界滿中。",
        "from": "T19n0937_001:0086a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金銀琉璃硨磲瑪瑙珊瑚琥珀。",
        "from": "T19n0937_001:0086a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是七寶盡持布施。",
        "from": "T19n0937_001:0086a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人供養此經典者。",
        "from": "T19n0937_001:0086a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便同供養一切真實法藏。",
        "from": "T19n0937_001:0086a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人能持上妙七寶。",
        "from": "T19n0937_001:0086a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養毘婆尸。",
        "from": "T19n0937_001:0086a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試棄。",
        "from": "T19n0937_001:0086a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘舍浮。",
        "from": "T19n0937_001:0086a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱留孫。",
        "from": "T19n0937_001:0086a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揭諾揭牟尼。",
        "from": "T19n0937_001:0086a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦設波。",
        "from": "T19n0937_001:0086a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟尼如來應正等覺。",
        "from": "T19n0937_001:0086a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲福德不能度量知其數量。",
        "from": "T19n0937_001:0086a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人供養此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲福德亦復不能度量知其限量。",
        "from": "T19n0937_001:0086b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如四大海水充滿其中。",
        "from": "T19n0937_001:0086b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能得知一一滴數。",
        "from": "T19n0937_001:0086b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人書寫供養。",
        "from": "T19n0937_001:0086b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲福德亦復不能度量知其限數。",
        "from": "T19n0937_001:0086b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人書寫是無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處所地位則是成就諸佛真身舍利寶塔。",
        "from": "T19n0937_001:0086b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應尊重禮拜。",
        "from": "T19n0937_001:0086b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生耳聞此陀羅尼者。",
        "from": "T19n0937_001:0086b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之眾生永不受飛鳥四足多足異類之身。",
        "from": "T19n0937_001:0086b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來速得成就不退轉無上正等菩提。",
        "from": "T19n0937_001:0086b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人。",
        "from": "T19n0937_001:0086b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積聚金銀琉璃硨磲瑪瑙珊瑚琥珀。",
        "from": "T19n0937_001:0086b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是七寶如妙高山王盡能捨施。",
        "from": "T19n0937_001:0086b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲福德不可度量知其數量。",
        "from": "T19n0937_001:0086b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人為此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能布施之者。",
        "from": "T19n0937_001:0086b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得福德亦復不能度量知其限數。",
        "from": "T19n0937_001:0086b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人書寫此無量壽決定光明王如來陀羅尼經。",
        "from": "T19n0937_001:0086b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮拜供養者。",
        "from": "T19n0937_001:0086b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人則為禮拜供養十方諸佛剎土一切如來。",
        "from": "T19n0937_001:0086b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無有異。",
        "from": "T19n0937_001:0086b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦牟尼世尊。",
        "from": "T19n0937_001:0086b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說彼伽他曰。",
        "from": "T19n0937_001:0086b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行布施力成就　　布施力故得成佛",
        "from": "T19n0937_001:0086b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入大悲精室中　　耳暫聞此陀羅尼",
        "from": "T19n0937_001:0086b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使布施未圓滿　　是人速證天人師",
        "from": "T19n0937_001:0086b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行持戒力成就　　持戒力故得成佛",
        "from": "T19n0937_001:0086b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入大悲精室中　　耳暫聞此陀羅尼",
        "from": "T19n0937_001:0086b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使持戒未圓滿　　是人速證天人師",
        "from": "T19n0937_001:0086b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行忍辱力成就　　忍辱力故得成佛",
        "from": "T19n0937_001:0086b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入大悲精室中　　耳暫聞此陀羅尼",
        "from": "T19n0937_001:0086b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使忍辱未圓滿　　是人速證天人師",
        "from": "T19n0937_001:0086b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行精進力成就　　精進力故得成佛",
        "from": "T19n0937_001:0086b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入大悲精室中　　耳暫聞此陀羅尼",
        "from": "T19n0937_001:0086b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使精進未圓滿　　是人速證天人師",
        "from": "T19n0937_001:0086c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行禪定力成就　　禪定力故得成佛",
        "from": "T19n0937_001:0086c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入大悲精室中　　耳暫聞此陀羅尼",
        "from": "T19n0937_001:0086c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使禪定未圓滿　　是人速證天人師",
        "from": "T19n0937_001:0086c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行智慧力成就　　智慧力故得成佛",
        "from": "T19n0937_001:0086c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入大悲精室中　　耳暫聞此陀羅尼",
        "from": "T19n0937_001:0086c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使智慧未圓滿　　是人速證天人師",
        "from": "T19n0937_001:0086c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經已。",
        "from": "T19n0937_001:0086c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大苾芻眾及諸菩薩。",
        "from": "T19n0937_001:0086c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間天人阿素囉彥闥嚩等。",
        "from": "T19n0937_001:0086c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T19n0937_001:0086c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大乘聖無量壽王經",
        "from": "T19n0937_001:0086c11_100",
        "context_with_next_sentence": false
    }
]