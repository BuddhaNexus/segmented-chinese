[
    {
        "source_sentence": "止觀輔行傳弘決序止觀輔行傳弘決序",
        "from": "T46n1912_001:0141a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗虛無者名教之道廢。遺文字者述作之",
        "from": "T46n1912_001:0141a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義乖。古先梵皇乘時利見。聖賢道契德音",
        "from": "T46n1912_001:0141a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫違。",
        "from": "T46n1912_001:0141a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚假言詮寄諸結集。",
        "from": "T46n1912_001:0141a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況時淹像季學鮮知幾。",
        "from": "T46n1912_001:0141a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領會之賓十無一二。",
        "from": "T46n1912_001:0141a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至有窮年默坐甘節於惛懵。",
        "from": "T46n1912_001:0141a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白首論心遲回於半滿。",
        "from": "T46n1912_001:0141a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人之多僻其若是乎。",
        "from": "T46n1912_001:0141a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未階捫象各陳乳色。",
        "from": "T46n1912_001:0141a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或謂即心是佛悟入之門。",
        "from": "T46n1912_001:0141a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色不異空本末誰迹。",
        "from": "T46n1912_001:0141a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將冥絕待章句何施。",
        "from": "T46n1912_001:0141a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼大教陵夷若是。",
        "from": "T46n1912_001:0141a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋由未辨文字之性離孰喻總持之功深。",
        "from": "T46n1912_001:0141a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟昔智者大師降生示世。",
        "from": "T46n1912_001:0141a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誕敷玄德大拯橫流。",
        "from": "T46n1912_001:0141a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咨覆簣於大思振絕維於龍猛。",
        "from": "T46n1912_001:0141a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命家作古以中觀為師宗。",
        "from": "T46n1912_001:0141a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立極建言以上乘為歸趣。",
        "from": "T46n1912_001:0141a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰付灌頂。",
        "from": "T46n1912_001:0141a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂公引而伸之。",
        "from": "T46n1912_001:0141a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欽若弘持廣有記述。",
        "from": "T46n1912_001:0141a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教門戶牖自此重明。",
        "from": "T46n1912_001:0141a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼之以法華威。",
        "from": "T46n1912_001:0141a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威公宿植不愆于素。",
        "from": "T46n1912_001:0141a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次天宮威。",
        "from": "T46n1912_001:0141a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威公敬承如水傳器。",
        "from": "T46n1912_001:0141a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授之於左谿玄朗。",
        "from": "T46n1912_001:0141a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朗公卓絕天機獨斷。",
        "from": "T46n1912_001:0141a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相沿說釋遑恤我文。",
        "from": "T46n1912_001:0141a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "載揚於毘壇湛然。",
        "from": "T46n1912_001:0141a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然公間生總角頴悟。",
        "from": "T46n1912_001:0141a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左谿深相器異誓以傳燈。",
        "from": "T46n1912_001:0141a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗言止觀二門乃統萬行。",
        "from": "T46n1912_001:0141a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓頓之設一以貫之。",
        "from": "T46n1912_001:0141a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "噫。",
        "from": "T46n1912_001:0141a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纘承四世年將二百。",
        "from": "T46n1912_001:0141a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魚魯斯訛不無同異。",
        "from": "T46n1912_001:0141a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方將繹思津導玄流。",
        "from": "T46n1912_001:0141a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂廣斥邪疑旁薄今古。",
        "from": "T46n1912_001:0141a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "質而不野博而不繁。",
        "from": "T46n1912_001:0141a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著輔行記凡十卷。",
        "from": "T46n1912_001:0141a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備前聖廣略之旨允今人勝劣之機。",
        "from": "T46n1912_001:0141a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈唯錯綜所聞將以隱括所治。",
        "from": "T46n1912_001:0141a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所治即行三多之妙運遽階。",
        "from": "T46n1912_001:0141a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所聞唯解一真之玄覽斯㳷。",
        "from": "T46n1912_001:0141b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫行有岐路則始終天隔。",
        "from": "T46n1912_001:0141b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解無方隅亦淺深隨類。",
        "from": "T46n1912_001:0141b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建言輔行以舉其全。",
        "from": "T46n1912_001:0141b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故自遠方來詢疑請益。",
        "from": "T46n1912_001:0141b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擊蒙發覆孜孜日夕。",
        "from": "T46n1912_001:0141b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶幾幽贊欽若傳弘。",
        "from": "T46n1912_001:0141b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道之將行不孤運矣。",
        "from": "T46n1912_001:0141b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咨予末學輕議上乘。",
        "from": "T46n1912_001:0141b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其猶爝火增輝二曜。",
        "from": "T46n1912_001:0141b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君山除饉男普門子敬序。",
        "from": "T46n1912_001:0141b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時永泰首元興唐八葉之四載。",
        "from": "T46n1912_001:0141b07_9",
        "context_with_next_sentence": true
    }
]