[
    {
        "source_sentence": "讚阿彌陀佛偈",
        "from": "T47n1978_001:0420c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曇鸞法師作",
        "from": "T47n1978_001:0420c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無阿彌陀佛釋名無量壽傍經奉讚亦曰安養。",
        "from": "T47n1978_001:0420c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無至心歸命禮西方阿彌陀佛。",
        "from": "T47n1978_001:0420c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在西方去此界　　十萬億剎安樂土",
        "from": "T47n1978_001:0420c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛世尊號阿彌陀　　我願往生歸命禮",
        "from": "T47n1978_001:0420c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成佛已來歷十劫　　壽命方將無有量",
        "from": "T47n1978_001:0420c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身光輪遍法界　　照世盲冥故頂禮",
        "from": "T47n1978_001:0420c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧光明不可量　　故佛又號無量光",
        "from": "T47n1978_001:0420c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有量諸相蒙光曉　　是故稽首真實明",
        "from": "T47n1978_001:0420c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫光輪無限齊　　故佛又號無邊光",
        "from": "T47n1978_001:0421a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙光觸者離有無　　是故稽首平等覺",
        "from": "T47n1978_001:0421a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光雲無礙如虛空　　故佛又號無礙光",
        "from": "T47n1978_001:0421a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有礙蒙光澤　　是故頂禮難思議",
        "from": "T47n1978_001:0421a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨光明無有對　　故佛又號無對光",
        "from": "T47n1978_001:0421a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇斯光者業繫除　　是故稽首畢竟依",
        "from": "T47n1978_001:0421a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛光照耀最第一　　故佛又號光炎王",
        "from": "T47n1978_001:0421a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三塗黑闇蒙光啟　　是故頂禮大應供",
        "from": "T47n1978_001:0421a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道光明朗色超絕　　故佛又號清淨光",
        "from": "T47n1978_001:0421a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一蒙光照罪垢除　　皆得解脫故頂禮",
        "from": "T47n1978_001:0421a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈光遐被施安樂　　故佛又號歡喜光",
        "from": "T47n1978_001:0421a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光所至處得法喜　　稽首頂禮大安慰",
        "from": "T47n1978_001:0421a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛光能破無明闇　　故佛又號智慧光",
        "from": "T47n1978_001:0421a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛三乘眾　　咸共歎譽故稽首",
        "from": "T47n1978_001:0421a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明一切時普照　　故佛又號不斷光",
        "from": "T47n1978_001:0421a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞光力故心不斷　　皆得往生故頂禮",
        "from": "T47n1978_001:0421b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光除佛莫能測　　故佛又號難思光",
        "from": "T47n1978_001:0421b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛歎往生　　稱其功德故稽首",
        "from": "T47n1978_001:0421b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神光離相不可名　　故佛又號無稱光",
        "from": "T47n1978_001:0421b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因光成佛光赫然　　諸佛所歎故頂禮",
        "from": "T47n1978_001:0421b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明照耀過日月　　故佛號超日月光",
        "from": "T47n1978_001:0421b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦佛歎尚不盡　　故我稽首無等等",
        "from": "T47n1978_001:0421b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀愍覆護我　　令法種增長　　此世及後生",
        "from": "T47n1978_001:0421b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願佛常攝受願共諸眾生往生安樂國南無至心歸命禮西方極樂世界觀世音菩薩願共諸眾生往生安樂國南無至心歸命禮西方極樂世界大勢至菩薩願共諸眾生往生安樂國南無至心歸命禮西方極樂世界諸菩薩清淨大海眾願共諸眾生往生安樂國普為師僧父母及善知識法界眾生。",
        "from": "T47n1978_001:0421b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷除三障。",
        "from": "T47n1978_001:0421b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同得往生阿彌陀佛國。",
        "from": "T47n1978_001:0421b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命懺悔。",
        "from": "T47n1978_001:0421b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛初會眾　　聲聞菩薩數無量",
        "from": "T47n1978_001:0421b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通巧妙不能算　　是故稽首廣大會",
        "from": "T47n1978_001:0421c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂無量摩訶薩　　咸當一生補佛處",
        "from": "T47n1978_001:0421c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除其本願大弘誓　　普欲度脫諸眾生",
        "from": "T47n1978_001:0421c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯等寶林功德聚　　一心合掌頭面禮",
        "from": "T47n1978_001:0421c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂國土諸聲聞　　皆光一尋若流星",
        "from": "T47n1978_001:0421c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩光輪四千里　　若秋滿月映紫金",
        "from": "T47n1978_001:0421c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集佛法藏為眾生　　故我頂禮大心海",
        "from": "T47n1978_001:0421c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又觀世音大勢至　　於諸聖眾最第一",
        "from": "T47n1978_001:0421c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈光照曜大千界　　侍佛左右顯神儀",
        "from": "T47n1978_001:0421c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度諸有緣不暫息　　如大海潮不失時",
        "from": "T47n1978_001:0421c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是大悲大勢至　　一心稽首頭面禮",
        "from": "T47n1978_001:0421c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有眾生生安樂　　悉具三十有二相",
        "from": "T47n1978_001:0421c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧滿足入深法　　究暢道要無障礙",
        "from": "T47n1978_001:0421c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨根利鈍成就忍　　二忍乃至不可計",
        "from": "T47n1978_001:0421c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿命五通常自在　　至佛不更雜惡趣",
        "from": "T47n1978_001:0421c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除生他方五濁世　　示現同如大牟尼",
        "from": "T47n1978_001:0421c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生安樂國成大利　　是故至心頭面禮",
        "from": "T47n1978_001:0421c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂菩薩承佛神　　於一食頃詣十方",
        "from": "T47n1978_001:0421c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可算數佛世界　　恭敬供養諸如來",
        "from": "T47n1978_001:0421c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華香伎樂從念現　　寶蓋幢幡隨意出",
        "from": "T47n1978_001:0422a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珍奇絕世無能名　　散華供養殊異寶",
        "from": "T47n1978_001:0422a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化成華蓋光晃耀　　香氣普薰莫不周",
        "from": "T47n1978_001:0422a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華蓋小者四百里　　乃有遍覆一佛界",
        "from": "T47n1978_001:0422a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其前後次化去　　是諸菩薩僉欣悅",
        "from": "T47n1978_001:0422a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於虛空中奏天樂　　雅讚德頌揚佛慧",
        "from": "T47n1978_001:0422a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽受經法供養已　　未食之前騰虛還",
        "from": "T47n1978_001:0422a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神力自在不可測　　故我頂禮無上尊",
        "from": "T47n1978_001:0422a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂佛國諸菩薩　　夫可宣說隨智慧",
        "from": "T47n1978_001:0422a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於己萬物亡我所　　淨若蓮華不受塵",
        "from": "T47n1978_001:0422a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來進止若汎舟　　利安為務捨適莫",
        "from": "T47n1978_001:0422a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼已猶空斷二想　　然智慧炬照長夜",
        "from": "T47n1978_001:0422a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三明六通皆已足　　菩薩萬行貫心眼",
        "from": "T47n1978_001:0422a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是功德無邊量　　是故至心頭面禮",
        "from": "T47n1978_001:0422a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂聲聞菩薩眾　　人天智慧咸洞達",
        "from": "T47n1978_001:0422a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身相莊嚴無殊異　　但順他方故列名",
        "from": "T47n1978_001:0422a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏容端正無可比　　精微妙軀非人天",
        "from": "T47n1978_001:0422a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛無之身無極體　　是故頂禮平等力",
        "from": "T47n1978_001:0422a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢能得生安樂國　　皆悉住於正定聚",
        "from": "T47n1978_001:0422a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪定不定其國無　　諸佛咸讚故頂禮",
        "from": "T47n1978_001:0422a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸聞阿彌陀佛號　　信心歡喜慶所聞",
        "from": "T47n1978_001:0422a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃暨一念至心者　　迴向願生皆得往",
        "from": "T47n1978_001:0422b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除五逆謗正法　　故我頂禮願往生",
        "from": "T47n1978_001:0422b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂菩薩聲聞輩　　於此世界無比方",
        "from": "T47n1978_001:0422b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦無礙大辯才　　設諸假令示少分",
        "from": "T47n1978_001:0422b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最賤乞人竝帝王　　帝王復比金輪王",
        "from": "T47n1978_001:0422b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是展轉至六天　　次第相形皆如始",
        "from": "T47n1978_001:0422b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以天色像喻於彼　　千萬億倍非其類",
        "from": "T47n1978_001:0422b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是法藏願力為　　稽首頂禮大心力",
        "from": "T47n1978_001:0422b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天人一切有所須　　無不稱欲應念至",
        "from": "T47n1978_001:0422b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一寶二寶無量寶　　隨心化造受用具",
        "from": "T47n1978_001:0422b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堂宇飲食悉如此　　故我稽首無稱佛",
        "from": "T47n1978_001:0422b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸往生者悉具足　　清淨色身無可比",
        "from": "T47n1978_001:0422b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通功德及宮殿　　服飾莊嚴如六天",
        "from": "T47n1978_001:0422b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應器寶鉢自然至　　百味嘉餚倏已滿",
        "from": "T47n1978_001:0422b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見色聞香意為食　　忽然飽足受適悅",
        "from": "T47n1978_001:0422b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所味清淨無所著　　事已化去須復現",
        "from": "T47n1978_001:0422b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晏安快樂次泥洹　　是故至心頭面禮",
        "from": "T47n1978_001:0422b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方佛土菩薩眾　　及諸比丘生安樂",
        "from": "T47n1978_001:0422b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無數不可計　　已生今生當亦然",
        "from": "T47n1978_001:0422b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆曾供養無量佛　　攝取百千堅固法",
        "from": "T47n1978_001:0422b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是大士悉往生　　是故頂禮阿彌陀",
        "from": "T47n1978_001:0422b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聞阿彌陀德號　　歡喜讚仰心歸依",
        "from": "T47n1978_001:0422c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下至一念得大利　　則為具足功德寶",
        "from": "T47n1978_001:0422c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設滿大千世界火　　亦應直過聞佛名",
        "from": "T47n1978_001:0422c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞阿彌陀不復退　　是故至心稽首禮",
        "from": "T47n1978_001:0422c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神力無極阿彌陀　　十方無量佛所歎",
        "from": "T47n1978_001:0422c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方恒沙諸佛國　　菩薩無數悉往覲",
        "from": "T47n1978_001:0422c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復供養安樂國　　菩薩聲聞諸大眾",
        "from": "T47n1978_001:0422c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽受經法宣道化　　自餘九方亦如是",
        "from": "T47n1978_001:0422c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦如來說偈頌　　無量功德故頂禮",
        "from": "T47n1978_001:0422c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來無量菩薩眾　　為植德本致虔恭",
        "from": "T47n1978_001:0422c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或奏音樂歌歎佛　　或頌佛慧照世間",
        "from": "T47n1978_001:0422c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以天華衣供養　　或覩淨土興等願",
        "from": "T47n1978_001:0422c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是聖眾悉現前　　蒙八梵聲授佛記",
        "from": "T47n1978_001:0422c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩增願行　　故我頂禮婆伽婆",
        "from": "T47n1978_001:0422c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖主世尊說法時　　大眾雲集七寶堂",
        "from": "T47n1978_001:0422c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽佛開示咸悟入　　歡喜充遍皆得道",
        "from": "T47n1978_001:0422c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時四面起清風　　擊動寶樹出妙響",
        "from": "T47n1978_001:0422c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和韻清徹遏糸竹　　踰於金石無倫比",
        "from": "T47n1978_001:0422c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天華繽紛逐香風　　自然供養常不息",
        "from": "T47n1978_001:0422c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天復持天華香　　百千伎樂用致敬",
        "from": "T47n1978_001:0422c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是功德三寶聚　　故我運想禮講堂",
        "from": "T47n1978_001:0422c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙土廣大超數限　　自然七寶所合成",
        "from": "T47n1978_001:0423a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛本願力莊嚴起　　稽首清淨大攝受",
        "from": "T47n1978_001:0423a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世界光曜妙殊絕　　適悅宴安無四時",
        "from": "T47n1978_001:0423a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自利利他力圓滿　　歸命方便巧莊嚴",
        "from": "T47n1978_001:0423a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶地澄靜平如掌　　無有山川陵谷阻",
        "from": "T47n1978_001:0423a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛神力須則見　　稽首不可思議尊",
        "from": "T47n1978_001:0423a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道樹高四百萬里　　周圍由旬有五十",
        "from": "T47n1978_001:0423a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枝葉布里二十萬　　自然眾寶所合成",
        "from": "T47n1978_001:0423a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月光摩尼海輪寶　　眾寶之王而莊嚴",
        "from": "T47n1978_001:0423a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周匝垂間寶瓔珞　　百千萬種色變異",
        "from": "T47n1978_001:0423a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光焰照曜超千日　　無極寶網覆其上",
        "from": "T47n1978_001:0423a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切莊嚴隨應現　　稽首頂禮道場樹",
        "from": "T47n1978_001:0423a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微風吹樹出法音　　普流十方諸佛剎",
        "from": "T47n1978_001:0423a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞斯音得深法忍　　至成佛道不遭苦",
        "from": "T47n1978_001:0423a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神力廣大不可量　　稽首頂禮道場樹",
        "from": "T47n1978_001:0423a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹香樹色樹音聲　　樹觸樹味及樹法",
        "from": "T47n1978_001:0423a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六情遇者得法忍　　故我頂禮道場樹",
        "from": "T47n1978_001:0423a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙道場樹對六根　　乃至成佛根清徹",
        "from": "T47n1978_001:0423b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "音響柔順無生忍　　隨力淺深咸得證",
        "from": "T47n1978_001:0423b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此樹威德所由來　　皆是如來五種力",
        "from": "T47n1978_001:0423b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神力本願及滿足　　明了堅固究竟願",
        "from": "T47n1978_001:0423b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲方便不可稱　　歸命稽首真無量",
        "from": "T47n1978_001:0423b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從世帝王至六天　　音樂轉妙有八重",
        "from": "T47n1978_001:0423b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉勝前億萬倍　　寶樹音麗倍亦然",
        "from": "T47n1978_001:0423b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有自然妙伎樂　　法音清和悅心神",
        "from": "T47n1978_001:0423b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀婉雅亮超十方　　故我稽首清淨樂",
        "from": "T47n1978_001:0423b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶樹林周世界　　光耀鮮明相映發",
        "from": "T47n1978_001:0423b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華果枝葉更互為　　稽首本願功德聚",
        "from": "T47n1978_001:0423b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清風時時吹寶樹　　出五音聲宮商和",
        "from": "T47n1978_001:0423b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微妙雅曲自然成　　故我頂禮清淨薰",
        "from": "T47n1978_001:0423b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其土廣大無崖際　　眾寶羅網遍覆上",
        "from": "T47n1978_001:0423b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金縷珠璣奇異珍　　不可名寶為挍飾",
        "from": "T47n1978_001:0423b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周匝四面垂寶鈴　　調風吹動出妙法",
        "from": "T47n1978_001:0423b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和雅德香常流布　　聞者塵勞習不起",
        "from": "T47n1978_001:0423b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此風觸身受快樂　　如比丘得滅盡定",
        "from": "T47n1978_001:0423b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風吹散華滿佛土　　隨色次第不雜亂",
        "from": "T47n1978_001:0423b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華質柔軟烈芬芳　　足履其上下四指",
        "from": "T47n1978_001:0423b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨舉足時還如故　　用訖地開沒無遺",
        "from": "T47n1978_001:0423b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其時節華六返　　不可議報故頂禮",
        "from": "T47n1978_001:0423c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾寶蓮華盈世界　　一一華百千億葉",
        "from": "T47n1978_001:0423c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其華光明色無量　　朱紫紅綠間五色",
        "from": "T47n1978_001:0423c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煒燁煥爛曜日光　　是故一心稽首禮",
        "from": "T47n1978_001:0423c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一華中所出光　　三十六百有千億",
        "from": "T47n1978_001:0423c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一光中有佛身　　多少亦如所出光",
        "from": "T47n1978_001:0423c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛身相好如金山　　一一又放百千光",
        "from": "T47n1978_001:0423c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為十方說妙法　　各安眾生於佛道",
        "from": "T47n1978_001:0423c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是神力無邊量　　故我歸命阿彌陀",
        "from": "T47n1978_001:0423c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樓閣殿堂非工造　　七寶彫綺化所成",
        "from": "T47n1978_001:0423c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明月珠璫交露幔　　各有浴池形相稱",
        "from": "T47n1978_001:0423c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八功德水滿池中　　色味香潔如甘露",
        "from": "T47n1978_001:0423c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃金池者白銀沙　　七寶池沙互如此",
        "from": "T47n1978_001:0423c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "池岸香樹垂布上　　栴檀芬馥常流馨",
        "from": "T47n1978_001:0423c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天華璀璨為映飾　　水上熠燿若景雲",
        "from": "T47n1978_001:0423c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無漏依果難思議　　是故稽首功德藏",
        "from": "T47n1978_001:0423c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩聲聞入寶池　　隨意淺深如所欲",
        "from": "T47n1978_001:0423c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若須灌身自然注　　欲令旋復水尋還",
        "from": "T47n1978_001:0423c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調和冷暖無不稱　　神開體悅蕩心垢",
        "from": "T47n1978_001:0423c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清明澄潔若無形　　寶沙映徹如不深",
        "from": "T47n1978_001:0423c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澹淡迴轉相注灌　　婥約容豫和人神",
        "from": "T47n1978_001:0423c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微波無量出妙響　　隨其所應聞法語",
        "from": "T47n1978_001:0424a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或聞三寶之妙章　　或聞寂靜空無我",
        "from": "T47n1978_001:0424a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或聞無量波羅蜜　　力不共法諸通慧",
        "from": "T47n1978_001:0424a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或聞無作無生忍　　乃至甘露灌頂法",
        "from": "T47n1978_001:0424a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨根性欲皆歡喜　　順三寶相真實義",
        "from": "T47n1978_001:0424a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩聲聞所行道　　於是一切悉具聞",
        "from": "T47n1978_001:0424a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三塗苦難名永閉　　但有自然快樂音",
        "from": "T47n1978_001:0424a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故其國號安樂　　頭面頂禮無極尊",
        "from": "T47n1978_001:0424a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本師龍樹摩訶薩　　誕形像始理頹綱",
        "from": "T47n1978_001:0424a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "關閉邪扇開正轍　　是閻浮提一切眼",
        "from": "T47n1978_001:0424a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏承尊悟歡喜地　　歸阿彌陀生安樂",
        "from": "T47n1978_001:0424a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如龍動雲必隨　　閻浮提放百卉舒",
        "from": "T47n1978_001:0424a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無慈悲龍樹尊　　至心歸命頭面禮",
        "from": "T47n1978_001:0424a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從無始循三界　　為虛妄輪所迴轉",
        "from": "T47n1978_001:0424a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念一時所造業　　足繫大地滯三塗",
        "from": "T47n1978_001:0424a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願慈光護念我　　令我不失菩提心",
        "from": "T47n1978_001:0424a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我讚佛慧功德音　　願聞十方諸有緣",
        "from": "T47n1978_001:0424a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得往生安樂者　　普皆如意無障礙",
        "from": "T47n1978_001:0424a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有功德若大少　　迴施一切共往生",
        "from": "T47n1978_001:0424a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無不可思議光　　一心歸命稽首禮",
        "from": "T47n1978_001:0424a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方三世無量慧　　同乘一如號正覺",
        "from": "T47n1978_001:0424a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二智圓滿道平等　　攝化隨緣故若干",
        "from": "T47n1978_001:0424b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我歸阿彌陀淨土　　即是歸命諸佛國",
        "from": "T47n1978_001:0424b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以一心讚一佛　　願遍十方無礙人",
        "from": "T47n1978_001:0424b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是十方無量佛　　咸各至心頭面禮",
        "from": "T47n1978_001:0424b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀愍覆護我　　令法種增長　　此世及後生",
        "from": "T47n1978_001:0424b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願佛常攝受願共諸眾生往生安樂國南無至心歸命禮西方極樂世界觀世音菩薩願共諸眾生往生安樂國南無至心歸命禮西方極樂世界大勢至菩薩願共諸眾生往生安樂國南無至心歸命禮西方極樂世界諸菩薩清淨大海眾願共諸眾生往生安樂國普為師僧父母及善知識法界眾生。",
        "from": "T47n1978_001:0424b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷除三障。",
        "from": "T47n1978_001:0424b18_1",
