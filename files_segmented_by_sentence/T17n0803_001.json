[
    {
        "source_sentence": "佛說清淨心經",
        "from": "T17n0803_001:0749a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫",
        "from": "T17n0803_001:0749a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試光祿卿傳法大師賜紫",
        "from": "T17n0803_001:0749a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門臣施護等奉　詔譯佛世尊一時在舍衛國祇樹給孤獨園，與苾芻眾俱。",
        "from": "T17n0803_001:0749a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告諸苾芻言：",
        "from": "T17n0803_001:0749a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝等諦聽！",
        "from": "T17n0803_001:0749a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸聲聞修習正行欲得清淨心者，當斷五法、修習七法而令圓滿。",
        "from": "T17n0803_001:0749a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等五法？",
        "from": "T17n0803_001:0749a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、貪欲；",
        "from": "T17n0803_001:0749a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二、瞋恚；",
        "from": "T17n0803_001:0749a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三、昏沈睡眠；",
        "from": "T17n0803_001:0749a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四、掉悔；",
        "from": "T17n0803_001:0749a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五、疑。",
        "from": "T17n0803_001:0749a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此五蓋障應當除斷。",
        "from": "T17n0803_001:0749a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「何等七法？",
        "from": "T17n0803_001:0749a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、擇法覺支；",
        "from": "T17n0803_001:0749a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二、念覺支；",
        "from": "T17n0803_001:0749a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三、精進覺支；",
        "from": "T17n0803_001:0749a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四、喜覺支；",
        "from": "T17n0803_001:0749a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五、輕安覺支；",
        "from": "T17n0803_001:0749a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六、定覺支；",
        "from": "T17n0803_001:0749a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七、捨覺支。",
        "from": "T17n0803_001:0749a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是七法應當修習。",
        "from": "T17n0803_001:0749a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸苾芻！",
        "from": "T17n0803_001:0749a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言清淨心者，當知即是心解脫增語、慧解脫增語，由貪染污，心不清淨；",
        "from": "T17n0803_001:0749a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由無明染污，慧不清淨。",
        "from": "T17n0803_001:0749a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸苾芻斷除貪染，即得心解脫；",
        "from": "T17n0803_001:0749a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷除無明，即得慧解脫。",
        "from": "T17n0803_001:0749a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又諸苾芻離貪染污得心解脫者，是名身作證；",
        "from": "T17n0803_001:0749a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷除無明得慧解脫者，是名無學。",
        "from": "T17n0803_001:0749a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離貪愛，了知真實，正智現前，取證自果，盡苦邊際。",
        "from": "T17n0803_001:0749a24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸苾芻！",
        "from": "T17n0803_001:0749a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是所說，汝等應學。",
        "from": "T17n0803_001:0749a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說清淨心經",
        "from": "T17n0803_001:0749a26_100",
        "context_with_next_sentence": false
    }
]