[
    {
        "source_sentence": "花嚴經疏卷第三",
        "from": "T85n2757_003:0234c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋元曉述",
        "from": "T85n2757_003:0234c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來光明覺品。此中如來放光普照十方。令",
        "from": "T85n2757_003:0234c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大眾除滅闇障覺如來身周遍法界。",
        "from": "T85n2757_003:0234c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以之故言光明覺品。",
        "from": "T85n2757_003:0234c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是答二問義如前說。",
        "from": "T85n2757_003:0234c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此佛光滅諸疑惑。",
        "from": "T85n2757_003:0234c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔眾災難。",
        "from": "T85n2757_003:0234c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是義故答彼二句更起元位。",
        "from": "T85n2757_003:0234c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心分內有二之中。",
        "from": "T85n2757_003:0234c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉所得果。",
        "from": "T85n2757_003:0234c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起願樂心。",
        "from": "T85n2757_003:0234c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既於前此下第二不所修行生進趣意。",
        "from": "T85n2757_003:0234c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中四品。",
        "from": "T85n2757_003:0234c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "科為二分。",
        "from": "T85n2757_003:0234c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂前二品。",
        "from": "T85n2757_003:0234c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣諸疑難以生信解。",
        "from": "T85n2757_003:0234c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後二品。",
        "from": "T85n2757_003:0234c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正說行德而令進修。",
        "from": "T85n2757_003:0234c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中亦二。",
        "from": "T85n2757_003:0234c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初品遣疑。",
        "from": "T85n2757_003:0234c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次品通難。",
        "from": "T85n2757_003:0234c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通難者於法難解。",
        "from": "T85n2757_003:0234c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生諸難故。",
        "from": "T85n2757_003:0234c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣疑者於佛未信。",
        "from": "T85n2757_003:0234c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起諸疑故。",
        "from": "T85n2757_003:0234c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此疑因何而得起者。",
        "from": "T85n2757_003:0234c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前二品說佛號諦名遍布十方一切世界。",
        "from": "T85n2757_003:0234c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是疑言。",
        "from": "T85n2757_003:0234c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為佛身遍故名聲隨遍耶。",
        "from": "T85n2757_003:0234c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為身局世此唯名聲遍耶。",
        "from": "T85n2757_003:0234c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若唯名聲遍而身不遍者。",
        "from": "T85n2757_003:0234c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何身業之報狹。",
        "from": "T85n2757_003:0234c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口業之果寬。",
        "from": "T85n2757_003:0234c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本修二業皆無量故。",
        "from": "T85n2757_003:0234c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如名遍身亦遍者。",
        "from": "T85n2757_003:0234c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故但見佛世。",
        "from": "T85n2757_003:0234c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此會為遣是疑故此品來。",
        "from": "T85n2757_003:0234c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大意如是。",
        "from": "T85n2757_003:0234c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次釋其文文中有二。",
        "from": "T85n2757_003:0234c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先明光從出處。",
        "from": "T85n2757_003:0234c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後顯光所照處。",
        "from": "T85n2757_003:0234c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中言從兩足相輪放百億光明。",
        "from": "T85n2757_003:0234c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相輪即是千輻輪相。",
        "from": "T85n2757_003:0234c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為表信行。",
        "from": "T85n2757_003:0234c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始發起者。",
        "from": "T85n2757_003:0234c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初起十心。",
        "from": "T85n2757_003:0234c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增至百千。",
        "from": "T85n2757_003:0234c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀雙運。",
        "from": "T85n2757_003:0234c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入賢首位故。",
        "from": "T85n2757_003:0234c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從兩足相輪而出也。",
        "from": "T85n2757_003:0234c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照以下光所照處。",
        "from": "T85n2757_003:0234c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從近至遠十重漸增表所為始發趣者漸修增進必滿位。",
        "from": "T85n2757_003:0234c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中正顯佛身遍然。",
        "from": "T85n2757_003:0234c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以身口二業果報皆同無邊等周法界。",
        "from": "T85n2757_003:0235a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就第一重即有二分。",
        "from": "T85n2757_003:0235a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先序光所照處所見之事。",
        "from": "T85n2757_003:0235a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後明濡首菩薩說偈讚佛。",
        "from": "T85n2757_003:0235a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中亦二。",
        "from": "T85n2757_003:0235a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先顯光照百億世界。",
        "from": "T85n2757_003:0235a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後明普見佛及大眾。",
        "from": "T85n2757_003:0235a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之九重科文亦爾。",
        "from": "T85n2757_003:0235a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚佛中亦有二。",
        "from": "T85n2757_003:0235a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先明一處。",
        "from": "T85n2757_003:0235a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後例餘處。",
        "from": "T85n2757_003:0235a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌中有二也。",
        "from": "T85n2757_003:0235a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前二頌依東方佛號讚佛。",
        "from": "T85n2757_003:0235a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動相。",
        "from": "T85n2757_003:0235a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之八頌寄濡首菩薩名。",
        "from": "T85n2757_003:0235a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯無住無得智。",
        "from": "T85n2757_003:0235a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中亦二。",
        "from": "T85n2757_003:0235a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初頌反顯。",
        "from": "T85n2757_003:0235a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後頌順明。",
        "from": "T85n2757_003:0235a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反顯義者若知如來脫縛離滿。",
        "from": "T85n2757_003:0235a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則謂如來有動有出。",
        "from": "T85n2757_003:0235a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有所得非淨眼故。",
        "from": "T85n2757_003:0235a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順明義者。",
        "from": "T85n2757_003:0235a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若知如來觀一切法皆無所有。",
        "from": "T85n2757_003:0235a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則順如來不動之智。",
        "from": "T85n2757_003:0235a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既非有住疾作佛故。",
        "from": "T85n2757_003:0235a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後八頌中即有四雙。",
        "from": "T85n2757_003:0235a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一雙中初頌達俗無實　次頌入真無二。",
        "from": "T85n2757_003:0235a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二雙者先明於人無住。",
        "from": "T85n2757_003:0235a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後顯於法久得。",
        "from": "T85n2757_003:0235a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三雙者先明於法離有無後顯於佛無減增。",
        "from": "T85n2757_003:0235a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四離雙者先明人法無所得門轉化眾生。",
        "from": "T85n2757_003:0235a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後顯一多無障礙門得無所畏。",
        "from": "T85n2757_003:0235a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法入一法故一中解無量。",
        "from": "T85n2757_003:0235a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一法入一切法故無量中解一也。",
        "from": "T85n2757_003:0235a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以能得互相入者。",
        "from": "T85n2757_003:0235a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉互為鏡影而生　非實而生故無障礙。",
        "from": "T85n2757_003:0235a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是謂濡首菩薩法門。",
        "from": "T85n2757_003:0235a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二頌中亦有二分。",
        "from": "T85n2757_003:0235a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前二頌寄南方佛號。",
        "from": "T85n2757_003:0235a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎智惠火法門。",
        "from": "T85n2757_003:0235a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之八頌依彼菩薩名。",
        "from": "T85n2757_003:0235a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯覺首法門。",
        "from": "T85n2757_003:0235a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中有二。",
        "from": "T85n2757_003:0235a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前之一頌見諸眾生癡闇令求無上惠明。",
        "from": "T85n2757_003:0235a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之一頌內懷不轉智火外轉無上光輪。",
        "from": "T85n2757_003:0235a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後八頌中亦作四雙。",
        "from": "T85n2757_003:0235a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一雙者前則弘誓為首覺生死眠。",
        "from": "T85n2757_003:0235a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後則慈悲為懷降眾魔怨。",
        "from": "T85n2757_003:0235a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二雙者內得深智覺。",
        "from": "T85n2757_003:0235a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能害諸煩惱。",
        "from": "T85n2757_003:0235a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外擊正法鼓警覺十方國。",
        "from": "T85n2757_003:0235a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三雙者下則於一切有而不取著。",
        "from": "T85n2757_003:0235a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上則於一切佛而生歡喜念。",
        "from": "T85n2757_003:0235a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四雙者為救眾生長劫受苦。",
        "from": "T85n2757_003:0235b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為護佛法。",
        "from": "T85n2757_003:0235b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不惜身命。",
        "from": "T85n2757_003:0235b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為覺首菩薩自覺覺他法門。",
        "from": "T85n2757_003:0235b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三頌中亦有二分。",
        "from": "T85n2757_003:0235b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前一頌寄西方佛名。",
        "from": "T85n2757_003:0235b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎淨智法行。",
        "from": "T85n2757_003:0235b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後九頌依彼財首菩薩之名。",
        "from": "T85n2757_003:0235b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明現種種功德。",
        "from": "T85n2757_003:0235b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "之則饒益一切眾生法門。",
        "from": "T85n2757_003:0235b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中有二。",
        "from": "T85n2757_003:0235b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上半覺淨。",
        "from": "T85n2757_003:0235b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下半心淨。",
        "from": "T85n2757_003:0235b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是謂淨智法行也。",
        "from": "T85n2757_003:0235b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四頌中亦有二分。",
        "from": "T85n2757_003:0235b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前九頌寄北方佛號。",
        "from": "T85n2757_003:0235b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎具威德智惠法門。",
        "from": "T85n2757_003:0235b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最後一頌依彼寶首菩薩之名。",
        "from": "T85n2757_003:0235b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯如鍊金清淨法門。",
        "from": "T85n2757_003:0235b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中亦二。",
        "from": "T85n2757_003:0235b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前一頌總標內外威德具足。",
        "from": "T85n2757_003:0235b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中上半內證威德。",
        "from": "T85n2757_003:0235b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下之二句外現威德。",
        "from": "T85n2757_003:0235b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其次八頌別顯四雙威德具足。",
        "from": "T85n2757_003:0235b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一雙者自覺離塵德。",
        "from": "T85n2757_003:0235b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化他普起威。",
        "from": "T85n2757_003:0235b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二雙者無陰離苦威內解外脫德。",
        "from": "T85n2757_003:0235b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三雙者靜而恒動威。",
        "from": "T85n2757_003:0235b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動而常寂德。",
        "from": "T85n2757_003:0235b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四雙者善知甚深德普見廣度威。",
        "from": "T85n2757_003:0235b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五頌中亦作二分。",
        "from": "T85n2757_003:0235b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前五頌依彼第五德首菩薩。",
        "from": "T85n2757_003:0235b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明其自利利他功德。",
        "from": "T85n2757_003:0235b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後五頌寄彼第五明智佛號。",
        "from": "T85n2757_003:0235b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎彼明照不思議境。",
        "from": "T85n2757_003:0235b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中亦二。",
        "from": "T85n2757_003:0235b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前之一頌下化群生慈悲之德。",
        "from": "T85n2757_003:0235b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後四頌上求佛道進修之德。",
        "from": "T85n2757_003:0235b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之五頌亦分為二。",
        "from": "T85n2757_003:0235b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前二頌明觀身心實相境界。",
        "from": "T85n2757_003:0235b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後三頌達無量不思議境。",
        "from": "T85n2757_003:0235b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六頌中即有二分。",
        "from": "T85n2757_003:0235b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七言六頌。",
        "from": "T85n2757_003:0235b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五言五頌。",
        "from": "T85n2757_003:0235b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七言頌中亦有二分。",
        "from": "T85n2757_003:0235b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前二頌依彼第六目首菩薩。",
        "from": "T85n2757_003:0235b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反顯淨目所見妙色。",
        "from": "T85n2757_003:0235b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後四頌寄東南方佛號。",
        "from": "T85n2757_003:0235b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘆究竟智深妙界。",
        "from": "T85n2757_003:0235b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五言頌中亦有二分。",
        "from": "T85n2757_003:0235b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前二頌依目首名。",
        "from": "T85n2757_003:0235b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘆佛淨眼自在法門。",
        "from": "T85n2757_003:0235b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之三頌寄彼佛號。",
        "from": "T85n2757_003:0235b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘆究竟智甚深境界。",
        "from": "T85n2757_003:0235b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七頌中亦作二分。",
        "from": "T85n2757_003:0235b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前二頌。",
        "from": "T85n2757_003:0235b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄西南方佛號。",
        "from": "T85n2757_003:0235b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚佛無上智覺。",
        "from": "T85n2757_003:0235b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後八頌依彼菩薩進首之名。",
        "from": "T85n2757_003:0235b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯其進入佛智境界。",
        "from": "T85n2757_003:0235c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中亦二。",
        "from": "T85n2757_003:0235c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前嘆自覺覺他無上之智。",
        "from": "T85n2757_003:0235c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後讚無染無毀無上之德。",
        "from": "T85n2757_003:0235c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後八頌中四雙不現。",
        "from": "T85n2757_003:0235c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一雙者進入佛智進入法海。",
        "from": "T85n2757_003:0235c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二雙者正轉法輪正思佛道。",
        "from": "T85n2757_003:0235c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三雙者順佛真教知佛實德。",
        "from": "T85n2757_003:0235c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四雙者觀察寂滅了知平等。",
        "from": "T85n2757_003:0235c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是謂進首進入法門也。",
        "from": "T85n2757_003:0235c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八偈中有二十頌。",
        "from": "T85n2757_003:0235c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為二分。",
        "from": "T85n2757_003:0235c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前十頌。",
        "from": "T85n2757_003:0235c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄西北方佛號。",
        "from": "T85n2757_003:0235c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘆自在智方便。",
        "from": "T85n2757_003:0235c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後十頌依菩薩法首之名。",
        "from": "T85n2757_003:0235c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘆於法義隨順智力。",
        "from": "T85n2757_003:0235c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中五雙。",
        "from": "T85n2757_003:0235c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一雙者大智自在大德成就。",
        "from": "T85n2757_003:0235c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二雙者覺性廣觀離相深樂。",
        "from": "T85n2757_003:0235c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三雙者於有無礙於空無著。",
        "from": "T85n2757_003:0235c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四雙者諦了差別樂觀平等。",
        "from": "T85n2757_003:0235c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五雙者攝一切智成最勝意。",
        "from": "T85n2757_003:0235c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五雙十門方便。",
        "from": "T85n2757_003:0235c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是自在智差別也。",
        "from": "T85n2757_003:0235c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次嘆法智。",
        "from": "T85n2757_003:0235c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦有五雙。",
        "from": "T85n2757_003:0235c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一雙者深法順知至處遍至。",
        "from": "T85n2757_003:0235c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二雙者隨順一心能至深境。",
        "from": "T85n2757_003:0235c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三雙者記念時節了知成敗。",
        "from": "T85n2757_003:0235c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四雙者所知差別能了方便。",
        "from": "T85n2757_003:0235c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五雙者觀察三世覺知平等。",
        "from": "T85n2757_003:0235c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五雙皆是法首法門也。",
        "from": "T85n2757_003:0235c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九頌中亦有二分。",
        "from": "T85n2757_003:0235c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前十頌寄彼下方佛號。",
        "from": "T85n2757_003:0235c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘆梵天智法門。",
        "from": "T85n2757_003:0235c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後十頌依彼智首菩薩之名。",
        "from": "T85n2757_003:0235c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘆其却闇智燈法門。",
        "from": "T85n2757_003:0235c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中有二。",
        "from": "T85n2757_003:0235c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頌略標。",
        "from": "T85n2757_003:0235c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八頌廣釋。",
        "from": "T85n2757_003:0235c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標中亦二。",
        "from": "T85n2757_003:0235c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前明梵行。",
        "from": "T85n2757_003:0235c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後顯梵音。",
        "from": "T85n2757_003:0235c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言梵行者。",
        "from": "T85n2757_003:0235c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵天現化化人間時。",
        "from": "T85n2757_003:0235c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受難行法形如骨鎖。",
        "from": "T85n2757_003:0235c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知難行即是梵行。",
        "from": "T85n2757_003:0235c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八頌廣釋。",
        "from": "T85n2757_003:0235c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即顯四門。",
        "from": "T85n2757_003:0235c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者二頌離高慢法門。",
        "from": "T85n2757_003:0235c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除生死苦難。",
        "from": "T85n2757_003:0235c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者二頌不放逸法門。",
        "from": "T85n2757_003:0235c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除世間放逸。",
        "from": "T85n2757_003:0235c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者二頌宣無我教門。",
        "from": "T85n2757_003:0235c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅眾生著我。",
        "from": "T85n2757_003:0235c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者二頌弘誓普潤門滅眾生熾火。",
        "from": "T85n2757_003:0235c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此曰皆是梵天行門也。",
        "from": "T85n2757_003:0235c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後十頌中亦有二分。",
        "from": "T85n2757_003:0235c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前二頌略標智門。",
        "from": "T85n2757_003:0235c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中前頌舉所滅闇。",
        "from": "T85n2757_003:0236a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後七頌顯能滅燈。",
        "from": "T85n2757_003:0236a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八頌釋中亦有四門。",
        "from": "T85n2757_003:0236a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者二頌船渡漂流法門。",
        "from": "T85n2757_003:0236a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者二頌橋拯沈沒法門。",
        "from": "T85n2757_003:0236a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者二頌方便拔苦法門。",
        "from": "T85n2757_003:0236a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者二頌實智與樂法門。",
        "from": "T85n2757_003:0236a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十頌中亦有二分。",
        "from": "T85n2757_003:0236a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前四頌寄彼上方佛號。",
        "from": "T85n2757_003:0236a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎伏怨智法門。",
        "from": "T85n2757_003:0236a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後十六頌依彼菩薩賢首之名。",
        "from": "T85n2757_003:0236a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣說賢首勝能法門。",
        "from": "T85n2757_003:0236a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中有二。",
        "from": "T85n2757_003:0236a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前二頌正顯伏怨勝智十力。",
        "from": "T85n2757_003:0236a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其次二頌。",
        "from": "T85n2757_003:0236a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標示伏怨名聲勝德。",
        "from": "T85n2757_003:0236a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為眾生以下第二賢首法門。",
        "from": "T85n2757_003:0236a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中有二。",
        "from": "T85n2757_003:0236a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前之四頌下化眾生勝能。",
        "from": "T85n2757_003:0236a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後十二頌上求佛道勝能。",
        "from": "T85n2757_003:0236a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能問十方佛以下第二上求佛道。",
        "from": "T85n2757_003:0236a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合十二頌以為六雙。",
        "from": "T85n2757_003:0236a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者問佛見佛為雙。",
        "from": "T85n2757_003:0236a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者能說能化為雙。",
        "from": "T85n2757_003:0236a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者聞佛音見佛身以為雙也。",
        "from": "T85n2757_003:0236a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者著有無著開以為雙也。",
        "from": "T85n2757_003:0236a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五雙者下喻上法。",
        "from": "T85n2757_003:0236a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六雙者外譬內法。",
        "from": "T85n2757_003:0236a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此後兩雙依比量門證成佛身周遍之義。",
        "from": "T85n2757_003:0236a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來十重光明遍照顯佛色身無所不遍。",
        "from": "T85n2757_003:0236a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十重說偈讚佛功德明佛內德亦無不周。",
        "from": "T85n2757_003:0236a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中亦顯菩薩德者。",
        "from": "T85n2757_003:0236a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明諸菩薩隨佛能適於佛。",
        "from": "T85n2757_003:0236a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起疑除遣已盡。",
        "from": "T85n2757_003:0236a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　交了寬文十年七月九日以石水院本寫了",
        "from": "T85n2757_003:0236a20_100",
        "context_with_next_sentence": false
    }
]