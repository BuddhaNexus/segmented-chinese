[
    {
        "source_sentence": "2佛說一切如來真實攝大乘現證",
        "from": "T18n0882_022:0412c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧大教王經卷第二十二",
        "from": "T18n0882_022:0412c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T18n0882_022:0412c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師賜紫沙門臣施護等奉　詔譯一切儀成就大曼拏羅廣大儀軌分第十九之餘爾時，聖虛空藏菩薩摩訶薩從自部出生已，所有一切如來等一切勝願皆悉圓滿，說此一切義成就大曼拏羅頌曰：",
        "from": "T18n0882_022:0412c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我今次第當演說，　　大曼拏羅勝無上，",
        "from": "T18n0882_022:0412c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相猶如金剛界，　　此名一切義成就。",
        "from": "T18n0882_022:0412c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇相四方與四門，　　及四樓閣而莊嚴，",
        "from": "T18n0882_022:0412c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四線抨量依法儀，　　珠瓔繒綵廣嚴飾，",
        "from": "T18n0882_022:0412c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其曼拏羅諸隅分，　　及諸門戶相合處，",
        "from": "T18n0882_022:0412c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈿金剛寶於其間，　　外曼拏羅抨如次。",
        "from": "T18n0882_022:0412c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇中位依法作，　　金剛妙寶所成宮，",
        "from": "T18n0882_022:0412c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八柱殊勝如本儀，　　隨教抨量而布設，",
        "from": "T18n0882_022:0413a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五曼拏羅妙嚴麗，　　種種寶光熾盛照，",
        "from": "T18n0882_022:0413a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周匝自印而圍繞，　　彼中依法安佛像。",
        "from": "T18n0882_022:0413a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0413a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「金剛步出東漸布，　　成一切願曼拏羅，",
        "from": "T18n0882_022:0413a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼中應畫金剛藏，　　寶施願相當如教，",
        "from": "T18n0882_022:0413a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼尊周匝諸分位，　　畫諸寶印悉周遍，",
        "from": "T18n0882_022:0413a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及畫大士依本儀，　　隨教所說如次第。",
        "from": "T18n0882_022:0413a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0413a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「以金剛步而漸進，　　南布寶鬘曼拏羅，",
        "from": "T18n0882_022:0413a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼中依法當正畫，　　執持最上寶鬘尊，",
        "from": "T18n0882_022:0413a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是尊周匝諸分位，　　如教所說依次第，",
        "from": "T18n0882_022:0413a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫諸大士悉莊嚴，　　各各執寶為標幟。",
        "from": "T18n0882_022:0413b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0413b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「以金剛步而漸布，　　妙寶蓮華曼拏羅，",
        "from": "T18n0882_022:0413b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼中依法應遍畫，　　執持妙寶蓮華尊，",
        "from": "T18n0882_022:0413b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是尊周匝諸分位，　　畫諸大士悉莊嚴，",
        "from": "T18n0882_022:0413b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執寶標幟隨本儀，　　如其所說依次第。",
        "from": "T18n0882_022:0413b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0413b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「以金剛步而漸進，　　北布寶雨曼拏羅，",
        "from": "T18n0882_022:0413b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼中依法畫本尊，　　當作雨諸寶雨相，",
        "from": "T18n0882_022:0413b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是尊周匝諸分位，　　畫諸大士如本儀，",
        "from": "T18n0882_022:0413b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸寶標幟各執持，　　及彼手印如次第。",
        "from": "T18n0882_022:0413b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0413b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「以金剛步而漸進，　　布曼拏羅諸隅分，",
        "from": "T18n0882_022:0413c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫寶嬉戲等四尊，　　如教所說依次第。",
        "from": "T18n0882_022:0413c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0413c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「以金剛步而漸進，　　布外曼拏羅最勝，",
        "from": "T18n0882_022:0413c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於外曼拏羅四隅，　　畫香供養等四尊。",
        "from": "T18n0882_022:0413c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0413c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「所有曼拏羅四門，　　護門賢聖依法畫，",
        "from": "T18n0882_022:0413c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼彼賢聖一門中，　　鉤索鎖鈴大明曰：",
        "from": "T18n0882_022:0413c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　薩哩嚩二合　囉怛那二合引　葛哩沙二合一句　阿引　哩野二合引　嚕拏摩賀引　薩埵二　婆誐晚多摩引　哥引舍誐哩婆二合　祖引　捺野引三　葛哩沙二合　野尸引　竭囕二合　呼引　𠺁四「唵引　薩哩嚩二合　囉怛那二合　鉢囉二合　吠引　舍三摩野一句　鉢囉二合　吠舍野二　薩哩嚩二合　三摩煬引　摩賀引　摩尼囉引　惹酤羅三　囉怛那二合　播引　舍吽引四「唵引　摩尼滿馱吽引　鑁一句「唵引　摩尼囉怛那二合引　吠引　舍惡一句「此大曼拏羅中所有本部寶阿闍梨，如教所說入曼拏羅，依廣儀軌先為己身作擁護已，然後當取寶加持瓶水與寶部弟子授於灌頂，令彼弟子結金剛寶三昧印，授是大明曰：",
        "from": "T18n0882_022:0414a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　嚩日囉二合　摩尼三摩野鑁一句「次當隨取一色繒帛與弟子覆面，勿令觀視，當引弟子入曼拏羅，授是大明曰：",
        "from": "T18n0882_022:0414a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　吽引　鉢囉二合　尾舍摩尼囉引　惹酤羅一句「入已謂弟子言：",
        "from": "T18n0882_022:0414a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝不應以此祕密法輒為人說，無令汝當墮大地獄，乃至於一切生中受貧窮苦，不得解脫。",
        "from": "T18n0882_022:0414a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』作是言已顯示三昧，復為彼說大乘現證三昧法門。",
        "from": "T18n0882_022:0414a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後寶阿闍梨發金剛語向空問言：",
        "from": "T18n0882_022:0414a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『何處當有廣大伏藏？",
        "from": "T18n0882_022:0414a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何能得？",
        "from": "T18n0882_022:0414a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』時彼具德虛空藏菩薩摩訶薩悉為指說。",
        "from": "T18n0882_022:0414a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是語時，乃與弟子除去面帛，普令觀視大曼拏羅。",
        "from": "T18n0882_022:0414a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復為說一切如來灌頂三昧，乃至最後世尊如來來現其前，行人即當隨力供養，然後一切所作事業皆得成就。",
        "from": "T18n0882_022:0414a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「次當教授智印頌曰：",
        "from": "T18n0882_022:0414a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「所有金剛藏大印，　　妙等引心依法結，",
        "from": "T18n0882_022:0414a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處伏藏欲掘時，　　隨處即當見伏藏。",
        "from": "T18n0882_022:0414a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若結最勝三昧印，　　隨於有彼伏藏處，",
        "from": "T18n0882_022:0414a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是印相合逼附時，　　自然踊起彼伏藏。",
        "from": "T18n0882_022:0414a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藏尊三摩地，　　妙等引心當觀想，",
        "from": "T18n0882_022:0414b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意知有伏藏處，　　是處即當伏藏住。",
        "from": "T18n0882_022:0414b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若結羯磨所成印，　　住金剛藏三摩地，",
        "from": "T18n0882_022:0414b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是印普遍警悟時，　　隨處即當見伏藏。",
        "from": "T18n0882_022:0414b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0414b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「大印依法而相合，　　是印於身作纏繞，",
        "from": "T18n0882_022:0414b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨彼所有寶藏處，　　當知自三昧所現。",
        "from": "T18n0882_022:0414b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若結最勝三昧印，　　當作警悟明開示，",
        "from": "T18n0882_022:0414b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨彼所有伏藏處，　　大寶莊嚴悉皆得。",
        "from": "T18n0882_022:0414b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若結三摩地印契，　　隨警悟已智自說，",
        "from": "T18n0882_022:0414b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由說某處有伏藏，　　大寶莊嚴悉皆得。",
        "from": "T18n0882_022:0414b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若結羯磨大印契，　　由作警悟三昧法，",
        "from": "T18n0882_022:0414b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手互相作縛時，　　隨處伏藏當出現。",
        "from": "T18n0882_022:0414b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0414b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「依法若結於大印，　　隨起疑心獲亦然，",
        "from": "T18n0882_022:0414b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由智如心了知時，　　是處伏藏自然有。",
        "from": "T18n0882_022:0414b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨起疑心於某處，　　即結勝三昧印縛，",
        "from": "T18n0882_022:0414c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後當解此印縛時，　　隨處即有伏藏現。",
        "from": "T18n0882_022:0414c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩地印依法結，　　隨起疑處決定得，",
        "from": "T18n0882_022:0414c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由智出生了知時，　　隨處常有伏藏寶。",
        "from": "T18n0882_022:0414c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑處若有伏藏生，　　是處當結羯磨印，",
        "from": "T18n0882_022:0414c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如教所說結印時，　　伏藏分明即出現。",
        "from": "T18n0882_022:0414c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0414c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「本部大印當相合，　　隨行尋求諸伏藏，",
        "from": "T18n0882_022:0414c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處依法警悟時，　　是處即有伏藏現。",
        "from": "T18n0882_022:0414c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結彼勝三昧印契，　　隨行尋求諸伏藏，",
        "from": "T18n0882_022:0414c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處印契堅固時，　　是處即有伏藏現。",
        "from": "T18n0882_022:0414c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結彼三摩地印契，　　隨行尋求諸伏藏，",
        "from": "T18n0882_022:0414c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處智所出生時，　　是處即有伏藏現。",
        "from": "T18n0882_022:0414c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結彼羯磨所成印，　　隨行尋求諸伏藏，",
        "from": "T18n0882_022:0414c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處羯磨印動搖，　　是處即有伏藏現。",
        "from": "T18n0882_022:0414c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0414c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　摩賀引　摩尼囉怛那二合　波哩引　叉引　尾舍一句「唵引　囉怛那二合　三摩野禰哩二合　棖捺哩舍二合　野一句「唵引　囉怛那二合　波哩引　叉引　倪也二合引　那引　尾舍「唵引　摩尼葛哩摩二合　勃囉二合引　摩野一句「次當教授祕密印智：",
        "from": "T18n0882_022:0414c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「蓮華金剛杵相合，　　隨行尋求諸伏藏，",
        "from": "T18n0882_022:0415a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法觀想大印時，　　普遍警悟得伏藏。",
        "from": "T18n0882_022:0415a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結彼勝三昧印契，　　善愛者愛亦復然，",
        "from": "T18n0882_022:0415a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處印契堅固成，　　是處即有伏藏現。",
        "from": "T18n0882_022:0415a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華金剛杵相合，　　隨行尋求諸伏藏，",
        "from": "T18n0882_022:0415a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法觀想智印時，　　伏藏隨時當轉現。",
        "from": "T18n0882_022:0415a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法結彼羯磨印，　　蓮華金剛杵相合，",
        "from": "T18n0882_022:0415a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處彼印煥明時，　　隨處即有伏藏現。",
        "from": "T18n0882_022:0415a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此等大明曰：",
        "from": "T18n0882_022:0415a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「唵引　摩賀引　摩尼三踰引　誐引　尾舍一句「唵引　三摩野三踰引　誐禰哩二合　厨引　彌引　婆嚩一句「唵引　儞提倪也二合引　那引　尾舍引　尾舍三踰引誐一句「唵引　薩哩嚩二合　葛哩摩二合　塞怖二合引　吒三踰引誐一句「然後教授大寶部中一切印智法。",
        "from": "T18n0882_022:0415a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「所謂先說彼大印智法：",
        "from": "T18n0882_022:0415a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「妙月曼拏羅中間，　　如所畫相順修習，",
        "from": "T18n0882_022:0415a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法觀想大印時，　　諸勝義利皆成就。",
        "from": "T18n0882_022:0415a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「次說一切大印所有功用：",
        "from": "T18n0882_022:0415a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「結佛印故得成佛，　　金剛藏印善成就，",
        "from": "T18n0882_022:0415a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝寶鉤印能普召，　　彼寶愛印常善愛，",
        "from": "T18n0882_022:0415a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶歡喜印常歡喜，　　由寶觀視攝大財，",
        "from": "T18n0882_022:0415a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶鬘印善作灌頂，　　寶日光印施威光，",
        "from": "T18n0882_022:0415a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶幢印隨所欲施，　　寶笑印能作義利，",
        "from": "T18n0882_022:0415a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法寶印常施妙法，　　勝捨當獲最上利，",
        "from": "T18n0882_022:0415a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶劍印作大快利，　　寶輪印為增上主，",
        "from": "T18n0882_022:0415a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙寶語印成就門，　　能轉寶雨大財聚，",
        "from": "T18n0882_022:0415a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶供養印善供養，　　寶甲冑印堅固護，",
        "from": "T18n0882_022:0415b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶牙印取諸寶財，　　寶拳印作諸成就。",
        "from": "T18n0882_022:0415b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「次說此大曼拏羅中三昧印智法：",
        "from": "T18n0882_022:0415b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼金剛寶所成印，　　能施一切印灌頂，",
        "from": "T18n0882_022:0415b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結大金剛寶印時，　　金剛寶事皆成就。",
        "from": "T18n0882_022:0415b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手金剛作羯磨，　　得執金剛尊大財，",
        "from": "T18n0882_022:0415b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此大指如金剛，　　安心能施諸珍寶。",
        "from": "T18n0882_022:0415b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緊密頭指作寶縛，　　得觀自在尊施財，",
        "from": "T18n0882_022:0415b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手巧業大寶幢，　　能施金剛羯磨寶。",
        "from": "T18n0882_022:0415b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豎二頭指復背屈，　　結二大指如金剛，",
        "from": "T18n0882_022:0415b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名金剛界勝寶，　　是印得成於佛寶。",
        "from": "T18n0882_022:0415b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛寶印此所說，　　即彼金剛藏尊印，",
        "from": "T18n0882_022:0415b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是印依法結中間，　　彼即得大金剛寶。",
        "from": "T18n0882_022:0415b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手寶金剛相合，　　竪二中指起如牙，",
        "from": "T18n0882_022:0415b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是印依法結中間，　　悉得自他大灌頂，",
        "from": "T18n0882_022:0415b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此中指無名指，　　小指緊密依法作，",
        "from": "T18n0882_022:0415b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名觀自在心印，　　是印能施諸財寶。",
        "from": "T18n0882_022:0415b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依彼金剛寶法用，　　頭指大指及小指，",
        "from": "T18n0882_022:0415b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指等皆相合，　　竪無名指起如牙，",
        "from": "T18n0882_022:0415b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手堅作金剛縛，　　屈二頭指如寶形，",
        "from": "T18n0882_022:0415b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒大指面如本儀，　　安心能施諸成就。",
        "from": "T18n0882_022:0415b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手金剛縛相合，　　合二中指如寶形，",
        "from": "T18n0882_022:0415b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印名為寶標幟，　　彼能施大摩尼寶，",
        "from": "T18n0882_022:0415b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此復作鉤法用，　　屈二頭指而相合，",
        "from": "T18n0882_022:0415b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印鉤召一切財，　　摩尼寶鉤亦如是。",
        "from": "T18n0882_022:0415b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此復作勇力勢，　　右頭指執左頭指，",
        "from": "T18n0882_022:0415b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如箭召射依本儀，　　鉤召世間敬愛事，",
        "from": "T18n0882_022:0415b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此復作善哉相，　　頭指大指各相合，",
        "from": "T18n0882_022:0415b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不改大指相合時，　　並諸指頭亦如是。",
        "from": "T18n0882_022:0415b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又二大指內縛中，　　復以二頭指如眼，",
        "from": "T18n0882_022:0415c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印名為寶觀視，　　觀已能集諸財利。",
        "from": "T18n0882_022:0415c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此大指面相合，　　成印當心而安置，",
        "from": "T18n0882_022:0415c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名諸義成就鬘，　　是印能施自灌頂。",
        "from": "T18n0882_022:0415c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手寶光相安心，　　是印能施大威光，",
        "from": "T18n0882_022:0415c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪無名指頂間安，　　此名廣大勝幢印。",
        "from": "T18n0882_022:0415c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此復作大笑相，　　依法嬉戲而旋轉，",
        "from": "T18n0882_022:0415c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印名為大寶笑，　　笑相能攝諸財利。",
        "from": "T18n0882_022:0415c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸指頭如寶蓮相，　　三摩地法攝諸財，",
        "from": "T18n0882_022:0415c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此頭指內縛中，　　此印能施大財聚，",
        "from": "T18n0882_022:0415c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊二大指而向下，　　立二頭指如寶形，",
        "from": "T18n0882_022:0415c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此寶劍印攝諸財，　　勇伏世間大快利。",
        "from": "T18n0882_022:0415c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結金剛縛最上輪，　　齊二大指入縛中，",
        "from": "T18n0882_022:0415c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指復如寶形，　　此名轉輪廣施印。",
        "from": "T18n0882_022:0415c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此諸指面相合，　　是印齊平而竪立，",
        "from": "T18n0882_022:0415c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼相合故語印成，　　依自教攝諸財利。",
        "from": "T18n0882_022:0415c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大金剛寶印當結，　　是印能雨諸寶雨，",
        "from": "T18n0882_022:0415c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸指依法磔散時，　　四方普雨諸財寶。",
        "from": "T18n0882_022:0415c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大金剛寶印當結，　　頂間應作旋舞相，",
        "from": "T18n0882_022:0415c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如教所說供養時，　　以諸珍寶普供養。",
        "from": "T18n0882_022:0415c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結一切義成就印，　　依法頸處而相合，",
        "from": "T18n0882_022:0415c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說名為寶縛印，　　是即甲冑而善護。",
        "from": "T18n0882_022:0415c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此一切成就印，　　作吞噉相口處安，",
        "from": "T18n0882_022:0415c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說寶牙如本儀，　　作怖畏攝諸財利。",
        "from": "T18n0882_022:0415c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手堅作金剛拳，　　屈二頭指依法用，",
        "from": "T18n0882_022:0415c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執二大指復如門，　　此寶拳印施成就。",
        "from": "T18n0882_022:0415c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸勝三昧供養印，　　悉依金剛界印法，",
        "from": "T18n0882_022:0415c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其所說寶法儀，　　此勝三昧印分別。",
        "from": "T18n0882_022:0415c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指如寶形相，　　此當如彼善分別，",
        "from": "T18n0882_022:0415c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一鉤等法儀，　　一切羯磨皆成就。",
        "from": "T18n0882_022:0416a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次，宣說此大寶部諸法印智，所謂：",
        "from": "T18n0882_022:0416a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「怛囉二合一句「屹囉二合一句「底哩二合一句「紇哩二合引一句「室哩二合引一句「翳「囉「郝「提引「提「訖哩二合引「嚩引「哩「茶引「藥「惡「今此部中當作寶拳，以成一切羯磨印契。",
        "from": "T18n0882_022:0416a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說一切如來真實攝大乘現證三昧大教王經卷第二十二",
        "from": "T18n0882_022:0416a21_100",
        "context_with_next_sentence": false
    }
]