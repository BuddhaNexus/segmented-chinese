{
    "X22n0414_001:0448c03_0": "觀無量壽佛經約論",
    "X22n0414_001:0448c05_0": "菩薩戒弟子　彭際清　述",
    "X22n0414_001:0448c06_0": "釋此經時。",
    "X22n0414_001:0448c06_1": "略開四分。",
    "X22n0414_001:0448c06_2": "一題名。",
    "X22n0414_001:0448c06_3": "二敘分。",
    "X22n0414_001:0448c06_4": "三正宗分。",
    "X22n0414_001:0448c06_5": "四流通分。",
    "X22n0414_001:0448c08_0": "一釋題名者。",
    "X22n0414_001:0448c08_1": "諸佛法身。",
    "X22n0414_001:0448c08_2": "本無差別。",
    "X22n0414_001:0448c08_3": "從緣應感。",
    "X22n0414_001:0448c08_4": "乃有多涂。",
    "X22n0414_001:0448c09_5": "觀佛一門。",
    "X22n0414_001:0448c09_6": "語其根要。",
    "X22n0414_001:0448c09_7": "佛即性德。",
    "X22n0414_001:0448c09_8": "觀即修德。",
    "X22n0414_001:0448c09_9": "以性攝修。",
    "X22n0414_001:0448c10_10": "全修是性。",
    "X22n0414_001:0448c10_11": "自他兩寂。",
    "X22n0414_001:0448c10_12": "唯一真心。",
    "X22n0414_001:0448c10_13": "坐斷十方。",
    "X22n0414_001:0448c10_14": "迥然超越。",
    "X22n0414_001:0448c11_15": "諸大乘經。",
    "X22n0414_001:0448c11_16": "廣詮斯指。",
    "X22n0414_001:0448c11_17": "此經以觀無量壽名者。",
    "X22n0414_001:0448c11_18": "專明極樂教主依正莊嚴。",
    "X22n0414_001:0448c12_19": "慈悲方便。",
    "X22n0414_001:0448c12_20": "與他方諸佛不相混濫。",
    "X22n0414_001:0448c13_21": "欲令眾生一心迴向。",
    "X22n0414_001:0448c13_22": "捷出生死。",
    "X22n0414_001:0448c13_23": "觀有多門。",
    "X22n0414_001:0448c13_24": "隨機利鈍。",
    "X22n0414_001:0448c14_25": "攝以一佛。",
    "X22n0414_001:0448c14_26": "更無不盡。",
    "X22n0414_001:0448c14_27": "九品分張。",
    "X22n0414_001:0448c14_28": "萬流齊赴。",
    "X22n0414_001:0448c14_29": "不離報化而頓徹法身。",
    "X22n0414_001:0448c15_30": "不外同居而直登補處。",
    "X22n0414_001:0448c15_31": "此之方便。",
    "X22n0414_001:0448c15_32": "無等無倫。",
    "X22n0414_001:0448c16_33": "遇斯經者。",
    "X22n0414_001:0448c16_34": "誠宜發決定心。",
    "X22n0414_001:0448c16_35": "堅儋何願。",
    "X22n0414_001:0448c16_36": "盡此報身。",
    "X22n0414_001:0448c17_37": "速生彼國。",
    "X22n0414_001:0448c18_0": "二釋敘分者。",
    "X22n0414_001:0448c18_1": "自如是我聞至清淨業處。",
    "X22n0414_001:0448c18_2": "名為敘分。",
    "X22n0414_001:0448c18_3": "將開淨土法門。",
    "X22n0414_001:0448c19_4": "而以韋提希發端者。",
    "X22n0414_001:0448c19_5": "一切眾生。",
    "X22n0414_001:0448c19_6": "依于無明而有貪愛。",
    "X22n0414_001:0448c20_7": "依于貪愛而有鬬爭。",
    "X22n0414_001:0448c20_8": "只緣不了自性空寂。",
    "X22n0414_001:0448c21_9": "妄執我人。",
    "X22n0414_001:0448c21_10": "謂為實有。",
    "X22n0414_001:0448c21_11": "恩怨循環。",
    "X22n0414_001:0448c21_12": "如轆轤轉。",
    "X22n0414_001:0448c21_13": "即令大覺現身。",
    "X22n0414_001:0448c22_14": "難回定業。",
    "X22n0414_001:0448c22_15": "唯在當人一念知非。",
    "X22n0414_001:0448c22_16": "纏縛自脫。",
    "X22n0414_001:0448c22_17": "從此起行。",
    "X22n0414_001:0448c23_18": "淨佛國土。",
    "X22n0414_001:0448c23_19": "成熟眾生。",
    "X22n0414_001:0448c23_20": "非為分外。",
    "X22n0414_001:0448c23_21": "故知入道因緣。",
    "X22n0414_001:0448c24_22": "先須覰破空華。",
    "X22n0414_001:0448c24_23": "痛念生死。",
    "X22n0414_001:0448c24_24": "而後能發出世心。",
    "X22n0414_001:0448c24_25": "能發出世心。",
    "X22n0414_001:0449a01_26": "而後能求生無欲國土。",
    "X22n0414_001:0449a01_27": "知求生無欲國土。",
    "X22n0414_001:0449a01_28": "而後能頓息塵勞。",
    "X22n0414_001:0449a02_29": "修諸淨業。",
    "X22n0414_001:0449a02_30": "淨業成時。",
    "X22n0414_001:0449a02_31": "轉娑婆。",
    "X22n0414_001:0449a02_32": "成極樂。",
    "X22n0414_001:0449a03_0": "上品往生。",
    "X22n0414_001:0449a03_1": "聞法得果。",
    "X22n0414_001:0449a03_2": "歷劫冤親。",
    "X22n0414_001:0449a03_3": "同時解脫。",
    "X22n0414_001:0449a03_4": "豈非大丈夫之能事哉。",
    "X22n0414_001:0449a04_5": "然世間眾生不肯發心者。",
    "X22n0414_001:0449a04_6": "略有二等。",
    "X22n0414_001:0449a04_7": "一執有。",
    "X22n0414_001:0449a05_8": "謂眼前諸相。",
    "X22n0414_001:0449a05_9": "種種實有。",
    "X22n0414_001:0449a05_10": "利養名聞。",
    "X22n0414_001:0449a05_11": "妄生戀著。",
    "X22n0414_001:0449a05_12": "此大愚癡。",
    "X22n0414_001:0449a06_13": "誠不足責。",
    "X22n0414_001:0449a06_14": "局名教者。",
    "X22n0414_001:0449a06_15": "計生滅為真常。",
    "X22n0414_001:0449a06_16": "慕[糸-八]修者。",
    "X22n0414_001:0449a07_17": "矜反還為至道。",
    "X22n0414_001:0449a07_18": "殊不知以四蘊觀心。",
    "X22n0414_001:0449a07_19": "心不可得。",
    "X22n0414_001:0449a07_20": "以四大觀身。",
    "X22n0414_001:0449a08_21": "身不可得。",
    "X22n0414_001:0449a08_22": "身心既不可得。",
    "X22n0414_001:0449a08_23": "覺海澄圓。",
    "X22n0414_001:0449a08_24": "徧空徧界。",
    "X22n0414_001:0449a09_25": "豈宜認彼浮漚。",
    "X22n0414_001:0449a09_26": "距茲溟渤。",
    "X22n0414_001:0449a09_27": "是有之不可執也明矣。",
    "X22n0414_001:0449a10_28": "一執空。",
    "X22n0414_001:0449a10_29": "謂死後斷滅。",
    "X22n0414_001:0449a10_30": "無有輪回。",
    "X22n0414_001:0449a10_31": "善惡賢愚。",
    "X22n0414_001:0449a10_32": "俱無後報。",
    "X22n0414_001:0449a11_33": "此大邪見。",
    "X22n0414_001:0449a11_34": "亦不足言。",
    "X22n0414_001:0449a11_35": "豁達狂禪。",
    "X22n0414_001:0449a11_36": "妄謂淨穢一如。",
    "X22n0414_001:0449a11_37": "東西不隔。",
    "X22n0414_001:0449a12_38": "委懷任運。",
    "X22n0414_001:0449a12_39": "何用希求。",
    "X22n0414_001:0449a12_40": "殊不知無明未破。",
    "X22n0414_001:0449a12_41": "業種宛然。",
    "X22n0414_001:0449a13_42": "口口說空。",
    "X22n0414_001:0449a13_43": "轉增我慢。",
    "X22n0414_001:0449a13_44": "隔陰所昏。",
    "X22n0414_001:0449a13_45": "了難自主。",
    "X22n0414_001:0449a13_46": "三涂惡報。",
    "X22n0414_001:0449a14_47": "還自受之。",
    "X22n0414_001:0449a14_48": "是空之不可執也明矣。",
    "X22n0414_001:0449a14_49": "二執既破。",
    "X22n0414_001:0449a14_50": "方能隨順佛語。",
    "X22n0414_001:0449a15_51": "發大菩提。",
    "X22n0414_001:0449a15_52": "與此眾生。",
    "X22n0414_001:0449a15_53": "同生極樂。",
    "X22n0414_001:0449a16_0": "三釋正宗分者。",
    "X22n0414_001:0449a16_1": "自世尊放眉間光。",
    "X22n0414_001:0449a16_2": "訖諸天發無上道心。",
    "X22n0414_001:0449a17_3": "名正宗分。",
    "X22n0414_001:0449a17_4": "世尊眉間放光。",
    "X22n0414_001:0449a17_5": "現諸淨土。",
    "X22n0414_001:0449a17_6": "令韋提希自擇者。",
    "X22n0414_001:0449a18_7": "葢諸佛國土。",
    "X22n0414_001:0449a18_8": "清淨光明。",
    "X22n0414_001:0449a18_9": "無踰極樂。",
    "X22n0414_001:0449a18_10": "肉眼親見。",
    "X22n0414_001:0449a18_11": "信樂倍深。",
    "X22n0414_001:0449a19_12": "從此思惟。",
    "X22n0414_001:0449a19_13": "便獲正受。",
    "X22n0414_001:0449a19_14": "下文將明淨觀。",
    "X22n0414_001:0449a19_15": "先教眾生修三福者。",
    "X22n0414_001:0449a20_16": "由世間法。",
    "X22n0414_001:0449a20_17": "漸達出世間法。",
    "X22n0414_001:0449a20_18": "如貯醍醐。",
    "X22n0414_001:0449a20_19": "先淨其器。",
    "X22n0414_001:0449a21_20": "其器不淨。",
    "X22n0414_001:0449a21_21": "其味則壞。",
    "X22n0414_001:0449a21_22": "孝養父母者。",
    "X22n0414_001:0449a21_23": "眾生依于父母而有其身。",
    "X22n0414_001:0449a22_24": "依于此身而知有佛。",
    "X22n0414_001:0449a22_25": "故不敬其身。",
    "X22n0414_001:0449a22_26": "則不能成就一切種智。",
    "X22n0414_001:0449a23_27": "不敬其親。",
    "X22n0414_001:0449a23_28": "則不能長養一切福田。",
    "X22n0414_001:0449a24_29": "或謂如來舍親出家。",
    "X22n0414_001:0449a24_30": "疑乖孝養之理。",
    "X22n0414_001:0449a24_31": "不知有世間之孝。",
    "X22n0414_001:0449b01_32": "有出世之孝。",
    "X22n0414_001:0449b01_33": "世間之孝。",
    "X22n0414_001:0449b01_34": "生則盡養。",
    "X22n0414_001:0449b01_35": "死則盡享。",
    "X22n0414_001:0449b01_36": "立身行道。",
    "X22n0414_001:0449b02_37": "揚名後世。",
    "X22n0414_001:0449b02_38": "則已。",
    "X22n0414_001:0449b02_39": "出世之孝。",
    "X22n0414_001:0449b02_40": "必待吾親出三有。",
    "X22n0414_001:0449b03_0": "證無生。",
    "X22n0414_001:0449b03_1": "子道方盡。",
    "X22n0414_001:0449b03_2": "大孝尊親。",
    "X22n0414_001:0449b03_3": "孰過于是。",
    "X22n0414_001:0449b03_4": "奉事師長者。",
    "X22n0414_001:0449b04_0": "有世間師長。",
    "X22n0414_001:0449b04_1": "有出世間師長。",
    "X22n0414_001:0449b04_2": "道之以詩書之業。",
    "X22n0414_001:0449b04_3": "策之于仁義之涂。",
    "X22n0414_001:0449b05_4": "世間師長也。",
    "X22n0414_001:0449b05_5": "啟之以三尊之教。",
    "X22n0414_001:0449b05_6": "進之以不二之門。",
    "X22n0414_001:0449b06_7": "出世間師長也。",
    "X22n0414_001:0449b06_8": "其宜奉事一也。",
    "X22n0414_001:0449b06_9": "慈心不殺者。",
    "X22n0414_001:0449b07_10": "佛心者。",
    "X22n0414_001:0449b07_11": "大慈悲是。",
    "X22n0414_001:0449b07_12": "娑婆惡業。",
    "X22n0414_001:0449b07_13": "無過殺生。",
    "X22n0414_001:0449b07_14": "歷劫冤讎。",
    "X22n0414_001:0449b08_0": "從殺生起。",
    "X22n0414_001:0449b08_1": "殺心不斷。",
    "X22n0414_001:0449b08_2": "則慈心不充。",
    "X22n0414_001:0449b08_3": "慈心不充。",
    "X22n0414_001:0449b08_4": "則與眾生成敵兩立。",
    "X22n0414_001:0449b09_5": "與眾生成敵兩立。",
    "X22n0414_001:0449b09_6": "即與如來成敵兩立。",
    "X22n0414_001:0449b10_0": "欲求生淨土難矣。",
    "X22n0414_001:0449b10_1": "十善。",
    "X22n0414_001:0449b10_2": "謂心三業。",
    "X22n0414_001:0449b10_3": "身三業。",
    "X22n0414_001:0449b10_4": "口四業。",
    "X22n0414_001:0449b10_5": "能修十善。",
    "X22n0414_001:0449b11_6": "對治十惡。",
    "X22n0414_001:0449b11_7": "則夙障漸除。",
    "X22n0414_001:0449b11_8": "夙障既除。",
    "X22n0414_001:0449b11_9": "故往生無礙。",
    "X22n0414_001:0449b12_10": "然必受之以三歸。",
    "X22n0414_001:0449b12_11": "廣之以眾戒者。",
    "X22n0414_001:0449b12_12": "不受三歸。",
    "X22n0414_001:0449b12_13": "則不能植出世之種。",
    "X22n0414_001:0449b13_14": "不具眾戒。",
    "X22n0414_001:0449b13_15": "則不能培出世之基。",
    "X22n0414_001:0449b13_16": "三歸眾戒。",
    "X22n0414_001:0449b14_17": "入佛正因故。",
    "X22n0414_001:0449b14_18": "然雖歸戒具足。",
    "X22n0414_001:0449b14_19": "苟不發菩提心。",
    "X22n0414_001:0449b14_20": "縱饒福德。",
    "X22n0414_001:0449b15_21": "終成有漏。",
    "X22n0414_001:0449b15_22": "以與如來無依智印不相契故。",
    "X22n0414_001:0449b15_23": "何名發菩提心。",
    "X22n0414_001:0449b16_24": "菩提者覺也。",
    "X22n0414_001:0449b16_25": "了知根塵識等。",
    "X22n0414_001:0449b16_26": "無我無我所。",
    "X22n0414_001:0449b17_27": "依于法界而起願求。",
    "X22n0414_001:0449b17_28": "廓徹虗空。",
    "X22n0414_001:0449b17_29": "平等隨順。",
    "X22n0414_001:0449b17_30": "心佛眾生。",
    "X22n0414_001:0449b18_31": "一念圓融。",
    "X22n0414_001:0449b18_32": "更無差別。",
    "X22n0414_001:0449b18_33": "如華嚴初發心功德品所說。",
    "X22n0414_001:0449b19_0": "發如是心。",
    "X22n0414_001:0449b19_1": "疾得成佛。",
    "X22n0414_001:0449b19_2": "深信因果者。",
    "X22n0414_001:0449b19_3": "為善得福。",
    "X22n0414_001:0449b19_4": "為惡得禍。",
    "X22n0414_001:0449b20_5": "如人蓡主補。",
    "X22n0414_001:0449b20_6": "大黃主瀉。",
    "X22n0414_001:0449b20_7": "補瀉在人。",
    "X22n0414_001:0449b20_8": "全由本具。",
    "X22n0414_001:0449b20_9": "故知為善即福。",
    "X22n0414_001:0449b21_10": "善外無福。",
    "X22n0414_001:0449b21_11": "為惡即禍。",
    "X22n0414_001:0449b21_12": "惡外無禍。",
    "X22n0414_001:0449b21_13": "是謂因果同時。",
    "X22n0414_001:0449b22_14": "然則一念念佛。",
    "X22n0414_001:0449b22_15": "是念即佛。",
    "X22n0414_001:0449b22_16": "念念念佛。",
    "X22n0414_001:0449b22_17": "無念不佛。",
    "X22n0414_001:0449b23_0": "心淨土淨。",
    "X22n0414_001:0449b23_1": "亦復如是。",
    "X22n0414_001:0449b23_2": "讀誦大乘者。",
    "X22n0414_001:0449b23_3": "不讀大乘。",
    "X22n0414_001:0449b23_4": "則不明佛心。",
    "X22n0414_001:0449b24_5": "不明佛心。",
    "X22n0414_001:0449b24_6": "則不契佛智。",
    "X22n0414_001:0449b24_7": "不契佛智。",
    "X22n0414_001:0449b24_8": "縱生彼國。",
    "X22n0414_001:0449b24_9": "不得見佛。",
    "X22n0414_001:0449c01_10": "果明佛心。",
    "X22n0414_001:0449c01_11": "果契佛智。",
    "X22n0414_001:0449c01_12": "自利利他。",
    "X22n0414_001:0449c01_13": "機不容己。",
    "X22n0414_001:0449c01_14": "以佛與眾生同一體故。",
    "X22n0414_001:0449c02_15": "三福齊修。",
    "X22n0414_001:0449c02_16": "淨因具足。",
    "X22n0414_001:0449c02_17": "或觀或念。",
    "X22n0414_001:0449c03_0": "隨所願求。",
    "X22n0414_001:0449c03_1": "譬如持鏡取像。",
    "X22n0414_001:0449c03_2": "揚聲責響。",
    "X22n0414_001:0449c03_3": "何遠之有。",
    "X22n0414_001:0449c04_0": "經以觀無量壽佛名。",
    "X22n0414_001:0449c04_1": "不徑令觀佛。",
    "X22n0414_001:0449c04_2": "而必先之以落日者。",
    "X22n0414_001:0449c05_3": "取其近而易見故。",
    "X22n0414_001:0449c05_4": "堅凝正向故。",
    "X22n0414_001:0449c05_5": "光明洞然。",
    "X22n0414_001:0449c05_6": "爍破幽暗。",
    "X22n0414_001:0449c06_7": "見佛階梯故。",
    "X22n0414_001:0449c06_8": "次冰。",
    "X22n0414_001:0449c06_9": "次地。",
    "X22n0414_001:0449c06_10": "次樹。",
    "X22n0414_001:0449c06_11": "次水。",
    "X22n0414_001:0449c06_12": "次眾寶等。",
    "X22n0414_001:0449c06_13": "佛觀深微。",
    "X22n0414_001:0449c07_14": "非諸眾生粗想所能得入。",
    "X22n0414_001:0449c07_15": "先觀依報。",
    "X22n0414_001:0449c07_16": "淘汰塵情。",
    "X22n0414_001:0449c08_0": "一觀既成。",
    "X22n0414_001:0449c08_1": "餘觀亦易。",
    "X22n0414_001:0449c08_2": "葢地水火風。",
    "X22n0414_001:0449c08_3": "一一具有如來藏性。",
    "X22n0414_001:0449c09_4": "何況阿彌陀佛淨願莊嚴。",
    "X22n0414_001:0449c09_5": "一塵一音。",
    "X22n0414_001:0449c09_6": "莫非我佛現身說法處。",
    "X22n0414_001:0449c11_0": "諸觀從粗入細。",
    "X22n0414_001:0449c11_1": "俱屬漸門。",
    "X22n0414_001:0449c11_2": "將觀佛身。",
    "X22n0414_001:0449c11_3": "先以華座。",
    "X22n0414_001:0449c11_4": "漸近漸親。",
    "X22n0414_001:0449c12_5": "乃入本位。",
    "X22n0414_001:0449c12_6": "要之此經佛觀為主。",
    "X22n0414_001:0449c12_7": "餘觀為輔。",
    "X22n0414_001:0449c12_8": "于佛觀中。",
    "X22n0414_001:0449c13_9": "攝取權乘。",
    "X22n0414_001:0449c13_10": "全歸一實。",
    "X22n0414_001:0449c13_11": "故曰諸佛如來是法界身。",
    "X22n0414_001:0449c14_0": "入一切眾生心想中。",
    "X22n0414_001:0449c14_1": "是心作佛。",
    "X22n0414_001:0449c14_2": "是心是佛。",
    "X22n0414_001:0449c14_3": "諸佛正徧知海。",
    "X22n0414_001:0449c15_4": "從心想生。",
    "X22n0414_001:0449c15_5": "入斯觀者。",
    "X22n0414_001:0449c15_6": "不歷程涂。",
    "X22n0414_001:0449c15_7": "莊嚴具足。",
    "X22n0414_001:0449c15_8": "是謂頓門。",
    "X22n0414_001:0449c16_9": "作者離自然義。",
    "X22n0414_001:0449c16_10": "是者離因緣義。",
    "X22n0414_001:0449c16_11": "知是心作佛。",
    "X22n0414_001:0449c16_12": "不知是心是佛。",
    "X22n0414_001:0449c17_13": "則昧本妙而滯功勳。",
    "X22n0414_001:0449c17_14": "知是心是佛。",
    "X22n0414_001:0449c17_15": "不知是心作佛。",
    "X22n0414_001:0449c18_16": "則任天真而廢修證。",
    "X22n0414_001:0449c18_17": "離此二邊。",
    "X22n0414_001:0449c18_18": "一念圓融。",
    "X22n0414_001:0449c19_0": "方明中道。",
    "X22n0414_001:0449c19_1": "亦名一心三觀。",
    "X22n0414_001:0449c19_2": "如金剛經云。",
    "X22n0414_001:0449c19_3": "凡所有相。",
    "X22n0414_001:0449c19_4": "皆是虗妄。",
    "X22n0414_001:0449c20_5": "若見諸相非相。",
    "X22n0414_001:0449c20_6": "即見如來。",
    "X22n0414_001:0449c20_7": "此明空觀。",
    "X22n0414_001:0449c20_8": "汝莫作是念。",
    "X22n0414_001:0449c21_9": "如來不以具足相故。",
    "X22n0414_001:0449c21_10": "得阿耨多羅三藐三菩提。",
    "X22n0414_001:0449c22_0": "此明假觀。",
    "X22n0414_001:0449c22_1": "如來所得阿耨多羅三藐三菩提。",
    "X22n0414_001:0449c22_2": "于是中無實無虗。",
    "X22n0414_001:0449c23_3": "此明中觀。",
    "X22n0414_001:0449c23_4": "然則水鳥樹林。",
    "X22n0414_001:0449c23_5": "寶池珠網。",
    "X22n0414_001:0449c23_6": "即色非色。",
    "X22n0414_001:0449c24_7": "即聲非聲。",
    "X22n0414_001:0449c24_8": "夢幻泡影。",
    "X22n0414_001:0449c24_9": "全體真如。",
    "X22n0414_001:0449c24_10": "故曰發阿耨多羅三藐三菩提心。",
    "X22n0414_001:0450a01_11": "于法不說斷滅相。",
    "X22n0414_001:0450a01_12": "眾生依于心境。",
    "X22n0414_001:0450a02_0": "見有佛身。",
    "X22n0414_001:0450a02_1": "是觀行佛。",
    "X22n0414_001:0450a02_2": "非究竟佛。",
    "X22n0414_001:0450a02_3": "然非觀行。",
    "X22n0414_001:0450a02_4": "則究竟不顯。",
    "X22n0414_001:0450a03_5": "由觀行而得究竟。",
    "X22n0414_001:0450a03_6": "方名正徧知。",
    "X22n0414_001:0450a03_7": "以觀佛身故。",
    "X22n0414_001:0450a03_8": "亦見佛心。",
    "X22n0414_001:0450a04_9": "知身不異心。",
    "X22n0414_001:0450a04_10": "故莊嚴非有。",
    "X22n0414_001:0450a04_11": "知心不異身。",
    "X22n0414_001:0450a04_12": "故湛寂非無。",
    "X22n0414_001:0450a05_13": "佛心者大慈悲是。",
    "X22n0414_001:0450a05_14": "以無緣慈攝諸眾生。",
    "X22n0414_001:0450a05_15": "唯無緣故。",
    "X22n0414_001:0450a06_16": "無所不周。",
    "X22n0414_001:0450a06_17": "亦無所不至。",
    "X22n0414_001:0450a06_18": "然慈悲無相。",
    "X22n0414_001:0450a06_19": "其顯而可見者莫光若矣。",
    "X22n0414_001:0450a07_20": "凡夫有八萬四千塵勞。",
    "X22n0414_001:0450a07_21": "諸佛轉成八萬四千度無極法門。",
    "X22n0414_001:0450a08_22": "故一一相。",
    "X22n0414_001:0450a08_23": "一一好。",
    "X22n0414_001:0450a08_24": "一一光。",
    "X22n0414_001:0450a08_25": "具足八萬四千之數。",
    "X22n0414_001:0450a09_26": "其光徧照十方世界念佛眾生。",
    "X22n0414_001:0450a09_27": "攝取不舍。",
    "X22n0414_001:0450a10_28": "是知眾生一念念佛。",
    "X22n0414_001:0450a10_29": "常在我佛大慈悲光中。",
    "X22n0414_001:0450a10_30": "坐臥經行。",
    "X22n0414_001:0450a11_31": "絲毫不隔。",
    "X22n0414_001:0450a11_32": "于諸光中。",
    "X22n0414_001:0450a11_33": "白毫相光斯為第一。",
    "X22n0414_001:0450a11_34": "觀白毫者。",
    "X22n0414_001:0450a12_35": "以不思議心。",
    "X22n0414_001:0450a12_36": "緣不思議境。",
    "X22n0414_001:0450a12_37": "當知此光即色即心。",
    "X22n0414_001:0450a13_0": "非心非色。",
    "X22n0414_001:0450a13_1": "無所從來。",
    "X22n0414_001:0450a13_2": "亦無所去。",
    "X22n0414_001:0450a13_3": "入此光中。",
    "X22n0414_001:0450a13_4": "八萬四千相好。",
    "X22n0414_001:0450a14_5": "無欠無餘。",
    "X22n0414_001:0450a14_6": "十方諸佛。",
    "X22n0414_001:0450a14_7": "炳然齊現。",
    "X22n0414_001:0450a14_8": "問。",
    "X22n0414_001:0450a14_9": "報化非真。",
    "X22n0414_001:0450a14_10": "唯心所現。",
    "X22n0414_001:0450a15_11": "何不徑觀自佛。",
    "X22n0414_001:0450a15_12": "而故令之遶為。",
    "X22n0414_001:0450a15_13": "答。",
    "X22n0414_001:0450a15_14": "以報化為非真者。",
    "X22n0414_001:0450a16_15": "是以法身為有外也。",
    "X22n0414_001:0450a16_16": "法身果有外乎。",
    "X22n0414_001:0450a16_17": "知法身無外。",
    "X22n0414_001:0450a17_18": "故能即報化以徹法身。",
    "X22n0414_001:0450a17_19": "法身不生不滅。",
    "X22n0414_001:0450a17_20": "不一不異。",
    "X22n0414_001:0450a18_21": "報化亦不生不滅。",
    "X22n0414_001:0450a18_22": "不一不異。",
    "X22n0414_001:0450a18_23": "其見為生滅一異者。",
    "X22n0414_001:0450a19_0": "特眾生之情量耳。",
    "X22n0414_001:0450a19_1": "情量盡時。",
    "X22n0414_001:0450a19_2": "當機覿露。",
    "X22n0414_001:0450a19_3": "一一相中。",
    "X22n0414_001:0450a19_4": "一一好中。",
    "X22n0414_001:0450a20_5": "一一光中。",
    "X22n0414_001:0450a20_6": "具足無邊大寂滅海。",
    "X22n0414_001:0450a20_7": "不入此門。",
    "X22n0414_001:0450a20_8": "不名念佛三昧。",
    "X22n0414_001:0450a21_9": "問。",
    "X22n0414_001:0450a21_10": "既諸觀中具足三觀。",
    "X22n0414_001:0450a21_11": "是實非權。",
    "X22n0414_001:0450a21_12": "是頓非漸。",
    "X22n0414_001:0450a22_13": "何以無同異中。",
    "X22n0414_001:0450a22_14": "又有權實頓漸之別。",
    "X22n0414_001:0450a22_15": "答。",
    "X22n0414_001:0450a22_16": "法無異法。",
    "X22n0414_001:0450a23_17": "證有淺深。",
    "X22n0414_001:0450a23_18": "經以觀佛為名。",
    "X22n0414_001:0450a23_19": "自當以佛觀為主。",
    "X22n0414_001:0450a23_20": "佛觀成時。",
    "X22n0414_001:0450a24_21": "現前得見十方諸佛。",
    "X22n0414_001:0450a24_22": "方名念佛三昧。",
    "X22n0414_001:0450a24_23": "生諸佛前。",
    "X22n0414_001:0450b01_0": "證無生忍。",
    "X22n0414_001:0450b01_1": "由其深達實相。",
    "X22n0414_001:0450b01_2": "故能便證無生。",
    "X22n0414_001:0450b01_3": "上根利智聞此法門。",
    "X22n0414_001:0450b02_4": "頓了唯心。",
    "X22n0414_001:0450b02_5": "直往無礙。",
    "X22n0414_001:0450b02_6": "不須更修餘觀。",
    "X22n0414_001:0450b02_7": "如如來不思議境界經說。",
    "X22n0414_001:0450b03_8": "然此諸觀。",
    "X22n0414_001:0450b03_9": "階次宛然。",
    "X22n0414_001:0450b03_10": "冰觀成時。",
    "X22n0414_001:0450b04_0": "聞苦空無常無我之音。",
    "X22n0414_001:0450b04_1": "水觀成時。",
    "X22n0414_001:0450b04_2": "聞讚佛相好及念佛念法念僧之音。",
    "X22n0414_001:0450b05_3": "佛觀成時。",
    "X22n0414_001:0450b05_4": "出定入定。",
    "X22n0414_001:0450b05_5": "恒聞妙法。",
    "X22n0414_001:0450b05_6": "與修多羅合。",
    "X22n0414_001:0450b06_7": "由小進大。",
    "X22n0414_001:0450b06_8": "與後上中諸輩所證略同。",
    "X22n0414_001:0450b06_9": "其生品亦可例推。",
    "X22n0414_001:0450b07_10": "行者自量根機。",
    "X22n0414_001:0450b07_11": "或一或兼。",
    "X22n0414_001:0450b07_12": "或具足觀。",
    "X22n0414_001:0450b07_13": "唯以決定往生為準。",
    "X22n0414_001:0450b08_14": "總無錯路。",
    "X22n0414_001:0450b08_15": "四明以前十三觀分當九品。",
    "X22n0414_001:0450b09_16": "未為定論。",
    "X22n0414_001:0450b09_17": "初觀一成。",
    "X22n0414_001:0450b09_18": "已屬事定。",
    "X22n0414_001:0450b09_19": "合當中品。",
    "X22n0414_001:0450b09_20": "何況第二第三。",
    "X22n0414_001:0450b10_21": "淨觀漸深。",
    "X22n0414_001:0450b10_22": "乃僅得當下品上中邪。",
    "X22n0414_001:0450b11_0": "既觀佛身。",
    "X22n0414_001:0450b11_1": "復觀觀音勢至者。",
    "X22n0414_001:0450b11_2": "是二菩薩。",
    "X22n0414_001:0450b11_3": "與無量壽佛。",
    "X22n0414_001:0450b12_0": "主伴交參。",
    "X22n0414_001:0450b12_1": "分身塵剎。",
    "X22n0414_001:0450b12_2": "同以光明而作佛事。",
    "X22n0414_001:0450b12_3": "攝取眾生。",
    "X22n0414_001:0450b13_0": "同歸淨土。",
    "X22n0414_001:0450b13_1": "須知眾生一念念佛。",
    "X22n0414_001:0450b13_2": "了得念體本空。",
    "X22n0414_001:0450b13_3": "即名觀世音。",
    "X22n0414_001:0450b14_4": "眾生一念念佛。",
    "X22n0414_001:0450b14_5": "信此念力具足。",
    "X22n0414_001:0450b14_6": "即名大勢至。",
    "X22n0414_001:0450b15_0": "知念體本空。",
    "X22n0414_001:0450b15_1": "故念而無念。",
    "X22n0414_001:0450b15_2": "知念力具足。",
    "X22n0414_001:0450b15_3": "故無生而生。",
    "X22n0414_001:0450b16_0": "無念而念。",
    "X22n0414_001:0450b16_1": "念體徧周。",
    "X22n0414_001:0450b16_2": "生而無生。",
    "X22n0414_001:0450b16_3": "生理常寂。",
    "X22n0414_001:0450b16_4": "即一即三。",
    "X22n0414_001:0450b17_0": "非三非一。",
    "X22n0414_001:0450b17_1": "是名無量壽佛。",
    "X22n0414_001:0450b18_0": "上文已明無量壽佛具足身相。",
    "X22n0414_001:0450b18_1": "復教人觀丈六佛身者。",
    "X22n0414_001:0450b19_2": "就凡夫心力所及。",
    "X22n0414_001:0450b19_3": "開此方便。",
    "X22n0414_001:0450b19_4": "此觀成時。",
    "X22n0414_001:0450b19_5": "漸可見佛具足身相。",
    "X22n0414_001:0450b20_6": "如如來不思議境界經。",
    "X22n0414_001:0450b20_7": "教人詣精舍中。",
    "X22n0414_001:0450b20_8": "觀佛形像。",
    "X22n0414_001:0450b21_9": "端坐思惟。",
    "X22n0414_001:0450b21_10": "經三七日。",
    "X22n0414_001:0450b21_11": "即見如來現在其前。",
    "X22n0414_001:0450b21_12": "放光說法。",
    "X22n0414_001:0450b22_13": "應見思惟。",
    "X22n0414_001:0450b22_14": "自心作佛。",
    "X22n0414_001:0450b22_15": "離心無佛。",
    "X22n0414_001:0450b22_16": "乃至三世一切諸佛。",
    "X22n0414_001:0450b23_17": "亦復如是。",
    "X22n0414_001:0450b23_18": "皆無所有。",
    "X22n0414_001:0450b23_19": "唯依自心。",
    "X22n0414_001:0450b23_20": "是故此經或現大身。",
    "X22n0414_001:0450b24_21": "或現小身。",
    "X22n0414_001:0450b24_22": "隨眾生心。",
    "X22n0414_001:0450b24_23": "應所知量。",
    "X22n0414_001:0450b24_24": "水月鏡華。",
    "X22n0414_001:0450b24_25": "無虗無實。",
    "X22n0414_001:0450c02_0": "上品往生。",
    "X22n0414_001:0450c02_1": "必三心具足者。",
    "X22n0414_001:0450c02_2": "所謂至誠心。",
    "X22n0414_001:0450c02_3": "深心。",
    "X22n0414_001:0450c02_4": "回向發願心。",
    "X22n0414_001:0450c03_5": "具此三心。",
    "X22n0414_001:0450c03_6": "是名發菩提心。",
    "X22n0414_001:0450c03_7": "何名至誠。",
    "X22n0414_001:0450c03_8": "至者不留餘地。",
    "X22n0414_001:0450c04_9": "誠者唯此一心。",
    "X22n0414_001:0450c04_10": "行者創聞是心作佛。",
    "X22n0414_001:0450c04_11": "是心是佛之指。",
    "X22n0414_001:0450c05_12": "發儋何心。",
    "X22n0414_001:0450c05_13": "直趣無上菩提。",
    "X22n0414_001:0450c05_14": "不復希求有餘涅槃。",
    "X22n0414_001:0450c06_0": "人天果報。",
    "X22n0414_001:0450c06_1": "第念不依佛力。",
    "X22n0414_001:0450c06_2": "行願難圓是故決定求生淨土。",
    "X22n0414_001:0450c07_3": "一意精修。",
    "X22n0414_001:0450c07_4": "無有間斷。",
    "X22n0414_001:0450c07_5": "是謂至誠。",
    "X22n0414_001:0450c07_6": "何名深心。",
    "X22n0414_001:0450c07_7": "經云深心信解常清淨。",
    "X22n0414_001:0450c08_8": "諸佛甚深法藏。",
    "X22n0414_001:0450c08_9": "非思量分別之所能解。",
    "X22n0414_001:0450c09_10": "然亦不離眾生妄想心中。",
    "X22n0414_001:0450c09_11": "故曰一切眾生。",
    "X22n0414_001:0450c09_12": "具有如來智慧。",
    "X22n0414_001:0450c10_13": "如來智慧非他。",
    "X22n0414_001:0450c10_14": "眾生妄想是。",
    "X22n0414_001:0450c10_15": "眾生妄想非他。",
    "X22n0414_001:0450c11_16": "如來智慧是。",
    "X22n0414_001:0450c11_17": "但以深心照了。",
    "X22n0414_001:0450c11_18": "知如來眾生無二無分別。",
    "X22n0414_001:0450c12_19": "則不于心外見佛。",
    "X22n0414_001:0450c12_20": "所見之佛。",
    "X22n0414_001:0450c12_21": "不離自心故。",
    "X22n0414_001:0450c12_22": "知如來眾生無二無分別。",
    "X22n0414_001:0450c13_23": "則不于心外求生淨土。",
    "X22n0414_001:0450c13_24": "了所生淨土。",
    "X22n0414_001:0450c14_25": "具足自心故。",
    "X22n0414_001:0450c14_26": "乃至即見無見。",
    "X22n0414_001:0450c14_27": "即生無生。",
    "X22n0414_001:0450c14_28": "清淨本來。",
    "X22n0414_001:0450c15_29": "離諸覺觀故。",
    "X22n0414_001:0450c15_30": "如是信解。",
    "X22n0414_001:0450c15_31": "是謂深心。",
    "X22n0414_001:0450c15_32": "何名迴向發願心。",
    "X22n0414_001:0450c16_33": "如阿彌陀佛為佛道故。",
    "X22n0414_001:0450c16_34": "發廣大心。",
    "X22n0414_001:0450c16_35": "我亦如是為佛道故。",
    "X22n0414_001:0450c17_36": "發廣大心。",
    "X22n0414_001:0450c17_37": "如阿彌陀佛為眾生故。",
    "X22n0414_001:0450c17_38": "取淨妙土。",
    "X22n0414_001:0450c17_39": "我亦如是為眾生故。",
    "X22n0414_001:0450c18_40": "取淨妙土。",
    "X22n0414_001:0450c18_41": "有一眾生未得度者。",
    "X22n0414_001:0450c18_42": "是則我土不淨。",
    "X22n0414_001:0450c19_43": "我佛不成。",
    "X22n0414_001:0450c19_44": "我佛眾生。",
    "X22n0414_001:0450c19_45": "即一即三。",
    "X22n0414_001:0450c19_46": "非三非一。",
    "X22n0414_001:0450c20_47": "究竟不可得故。",
    "X22n0414_001:0450c20_48": "是名迴向發願心。",
    "X22n0414_001:0450c20_49": "此三心者。",
    "X22n0414_001:0450c20_50": "亦具三諦。",
    "X22n0414_001:0450c21_51": "初從空出假觀。",
    "X22n0414_001:0450c21_52": "次從假還空觀。",
    "X22n0414_001:0450c21_53": "次一念圓融。",
    "X22n0414_001:0450c21_54": "雙泯雙照觀。",
    "X22n0414_001:0450c22_55": "三種眾生者。",
    "X22n0414_001:0450c22_56": "言齊修三種行業之眾生。",
    "X22n0414_001:0450c22_57": "非謂各修一種也。",
    "X22n0414_001:0450c23_58": "葢信願相資。",
    "X22n0414_001:0450c23_59": "解行相發。",
    "X22n0414_001:0450c23_60": "一有所虧。",
    "X22n0414_001:0450c23_61": "不能入道。",
    "X22n0414_001:0450c24_62": "六念。",
    "X22n0414_001:0450c24_63": "謂佛法僧施戒天。",
    "X22n0414_001:0450c24_64": "具此功德者。",
    "X22n0414_001:0450c24_65": "就長時而論。",
    "X22n0414_001:0451a01_66": "一日乃至七日。",
    "X22n0414_001:0451a01_67": "據小本持名。",
    "X22n0414_001:0451a01_68": "大集繫念。",
    "X22n0414_001:0451a01_69": "俱有此文。",
    "X22n0414_001:0451a02_70": "經特約言之。",
    "X22n0414_001:0451a02_71": "務在一心不亂。",
    "X22n0414_001:0451a02_72": "尅期取效。",
    "X22n0414_001:0451a02_73": "斯為精進勇猛。",
    "X22n0414_001:0451a03_74": "四明謂或全或分。",
    "X22n0414_001:0451a03_75": "皆得言具。",
    "X22n0414_001:0451a03_76": "生品高下。",
    "X22n0414_001:0451a03_77": "約于斷伏及全未伏為言。",
    "X22n0414_001:0451a04_78": "然斷伏之功。",
    "X22n0414_001:0451a04_79": "須由積累。",
    "X22n0414_001:0451a04_80": "三種未全。",
    "X22n0414_001:0451a05_0": "難期勝果。",
    "X22n0414_001:0451a05_1": "從散入定。",
    "X22n0414_001:0451a05_2": "通達一心。",
    "X22n0414_001:0451a05_3": "方成三昧。",
    "X22n0414_001:0451a05_4": "由戒行具足故。",
    "X22n0414_001:0451a06_5": "所見佛菩薩色相具足。",
    "X22n0414_001:0451a06_6": "田信樂大乘故。",
    "X22n0414_001:0451a06_7": "聞說妙法。",
    "X22n0414_001:0451a07_8": "即得無生法忍。",
    "X22n0414_001:0451a07_9": "經受記已。",
    "X22n0414_001:0451a07_10": "即得無量百千陀羅尼門。",
    "X22n0414_001:0451a08_11": "上品中生者。",
    "X22n0414_001:0451a08_12": "于第一義已有悟入。",
    "X22n0414_001:0451a08_13": "特修證之功。",
    "X22n0414_001:0451a08_14": "與上生者有間。",
    "X22n0414_001:0451a09_15": "故生品次之。",
    "X22n0414_001:0451a09_16": "上品下生者。",
    "X22n0414_001:0451a09_17": "發無上道心。",
    "X22n0414_001:0451a10_0": "其迴向願求迥超二乘。",
    "X22n0414_001:0451a10_1": "與前二輩同。",
    "X22n0414_001:0451a10_2": "而行解未具。",
    "X22n0414_001:0451a10_3": "故生品又次之。",
    "X22n0414_001:0451a11_4": "第一義者。",
    "X22n0414_001:0451a11_5": "即是諸法實相。",
    "X22n0414_001:0451a11_6": "離四句。",
    "X22n0414_001:0451a11_7": "絕百非。",
    "X22n0414_001:0451a12_8": "唯證乃知。",
    "X22n0414_001:0451a12_9": "非情所測。",
    "X22n0414_001:0451a12_10": "如佛在逝多林說華嚴經。",
    "X22n0414_001:0451a12_11": "諸大聲聞不聞不見。",
    "X22n0414_001:0451a13_12": "法華會上。",
    "X22n0414_001:0451a13_13": "亦有退席比丘。",
    "X22n0414_001:0451a13_14": "故知此事難信難解。",
    "X22n0414_001:0451a14_15": "問。",
    "X22n0414_001:0451a14_16": "讀誦與解義。",
    "X22n0414_001:0451a14_17": "自當以解義為高。",
    "X22n0414_001:0451a14_18": "讀誦為下。",
    "X22n0414_001:0451a15_19": "何以讀誦轉屬上生。",
    "X22n0414_001:0451a15_20": "解義乃居其次。",
    "X22n0414_001:0451a15_21": "答。",
    "X22n0414_001:0451a15_22": "此之讀誦。",
    "X22n0414_001:0451a16_23": "兼攝解義。",
    "X22n0414_001:0451a16_24": "若非解第一義。",
    "X22n0414_001:0451a16_25": "安能圓具三心。",
    "X22n0414_001:0451a16_26": "解義而兼讀誦。",
    "X22n0414_001:0451a17_27": "以不思議熏。",
    "X22n0414_001:0451a17_28": "入無分別智。",
    "X22n0414_001:0451a17_29": "法界重重。",
    "X22n0414_001:0451a17_30": "全歸自性。",
    "X22n0414_001:0451a18_31": "十方剎土。",
    "X22n0414_001:0451a18_32": "不隔毫端。",
    "X22n0414_001:0451a18_33": "諸助緣中。",
    "X22n0414_001:0451a18_34": "莫此為勝。",
    "X22n0414_001:0451a18_35": "上上證無生忍。",
    "X22n0414_001:0451a19_36": "當別教初地。",
    "X22n0414_001:0451a19_37": "圓教初住。",
    "X22n0414_001:0451a19_38": "此生後增進之果。",
    "X22n0414_001:0451a19_39": "據現前論。",
    "X22n0414_001:0451a20_40": "自屬別教地前諸位。",
    "X22n0414_001:0451a20_41": "故天台以道種性判之。",
    "X22n0414_001:0451a21_0": "上中為性種。",
    "X22n0414_001:0451a21_1": "上下為習種。",
    "X22n0414_001:0451a21_2": "即十向十行十住也。",
    "X22n0414_001:0451a21_3": "而以十信以下。",
    "X22n0414_001:0451a22_4": "判中三品。",
    "X22n0414_001:0451a22_5": "恐非經指。",
    "X22n0414_001:0451a22_6": "葢十信為三賢之首。",
    "X22n0414_001:0451a23_0": "大乘始基。",
    "X22n0414_001:0451a23_1": "既生彼國。",
    "X22n0414_001:0451a23_2": "聞法增進。",
    "X22n0414_001:0451a23_3": "合登初住。",
    "X22n0414_001:0451a23_4": "決無還證小乘之理。",
    "X22n0414_001:0451a24_5": "若云是退菩提聲聞。",
    "X22n0414_001:0451a24_6": "既退菩提。",
    "X22n0414_001:0451a24_7": "已離信位。",
    "X22n0414_001:0451b01_0": "何得虗冐此名。",
    "X22n0414_001:0451b01_1": "愚竊謂十信位中。",
    "X22n0414_001:0451b01_2": "合當上下。",
    "X22n0414_001:0451b01_3": "經云。",
    "X22n0414_001:0451b01_4": "但發無上道心。",
    "X22n0414_001:0451b02_5": "圓解未開。",
    "X22n0414_001:0451b02_6": "正同信位依無量四諦。",
    "X22n0414_001:0451b02_7": "發四弘誓故。",
    "X22n0414_001:0451b03_8": "上中當初住以上。",
    "X22n0414_001:0451b03_9": "既生之後。",
    "X22n0414_001:0451b03_10": "即斷見思。",
    "X22n0414_001:0451b03_11": "得不退地。",
    "X22n0414_001:0451b04_12": "合是七住。",
    "X22n0414_001:0451b04_13": "上上當八住至十向。",
    "X22n0414_001:0451b04_14": "已斷塵沙。",
    "X22n0414_001:0451b04_15": "唯無明未破。",
    "X22n0414_001:0451b05_16": "聞法增進。",
    "X22n0414_001:0451b05_17": "頓破無明。",
    "X22n0414_001:0451b05_18": "故謂得無生忍。",
    "X22n0414_001:0451b05_19": "圓教五品。",
    "X22n0414_001:0451b06_20": "位同十信。",
    "X22n0414_001:0451b06_21": "生品可知。",
    "X22n0414_001:0451b06_22": "如天台即以此品往生者。",
    "X22n0414_001:0451b06_23": "豈落上三品下邪。",
    "X22n0414_001:0451b08_0": "上品乘戒俱急。",
    "X22n0414_001:0451b08_1": "中上戒急乘緩。",
    "X22n0414_001:0451b08_2": "梵網經云。",
    "X22n0414_001:0451b08_3": "眾生受佛戒。",
    "X22n0414_001:0451b09_4": "即入諸佛位。",
    "X22n0414_001:0451b09_5": "諸佛無體。",
    "X22n0414_001:0451b09_6": "即法為體。",
    "X22n0414_001:0451b09_7": "諸佛無相。",
    "X22n0414_001:0451b09_8": "即戒示相。",
    "X22n0414_001:0451b10_9": "是故眾生持佛戒者。",
    "X22n0414_001:0451b10_10": "得與如來法流水接。",
    "X22n0414_001:0451b10_11": "中中一日一夜。",
    "X22n0414_001:0451b11_12": "為時雖暫。",
    "X22n0414_001:0451b11_13": "信力已深戒香所熏。",
    "X22n0414_001:0451b11_14": "極樂不遠。",
    "X22n0414_001:0451b12_0": "中下素少淨因。",
    "X22n0414_001:0451b12_1": "而善根已熟。",
    "X22n0414_001:0451b12_2": "一經開示。",
    "X22n0414_001:0451b12_3": "若時雨化。",
    "X22n0414_001:0451b12_4": "然此三輩。",
    "X22n0414_001:0451b13_5": "前一輩葢深厭生死。",
    "X22n0414_001:0451b13_6": "依藏教四諦。",
    "X22n0414_001:0451b13_7": "發出世心。",
    "X22n0414_001:0451b14_0": "修集善本。",
    "X22n0414_001:0451b14_1": "迴向往生。",
    "X22n0414_001:0451b14_2": "聞法增進。",
    "X22n0414_001:0451b14_3": "見思惑盡。",
    "X22n0414_001:0451b14_4": "便證四果。",
    "X22n0414_001:0451b15_0": "後二輩。",
    "X22n0414_001:0451b15_1": "一則略沾戒品。",
    "X22n0414_001:0451b15_2": "一則唯修世善。",
    "X22n0414_001:0451b15_3": "以人天業。",
    "X22n0414_001:0451b15_4": "迴向往生。",
    "X22n0414_001:0451b16_5": "由聞法故。",
    "X22n0414_001:0451b16_6": "見惑先盡。",
    "X22n0414_001:0451b16_7": "得證初果。",
    "X22n0414_001:0451b16_8": "如此諸人。",
    "X22n0414_001:0451b16_9": "佛慈加被。",
    "X22n0414_001:0451b17_10": "還能迴小向大。",
    "X22n0414_001:0451b17_11": "不住權乘。",
    "X22n0414_001:0451b17_12": "故小本云。",
    "X22n0414_001:0451b17_13": "是諸人等。",
    "X22n0414_001:0451b18_14": "皆得不退轉于阿耨多羅三藐三菩提。",
    "X22n0414_001:0451b19_0": "大本往生三輩。",
    "X22n0414_001:0451b19_1": "皆發菩提。",
    "X22n0414_001:0451b19_2": "而除五逆謗法。",
    "X22n0414_001:0451b19_3": "別有胎生一類。",
    "X22n0414_001:0451b20_4": "以疑惑佛智故。",
    "X22n0414_001:0451b20_5": "葢菩提心非智慧不發。",
    "X22n0414_001:0451b20_6": "此經唯上品三輩。",
    "X22n0414_001:0451b21_7": "略與大本三輩相當。",
    "X22n0414_001:0451b21_8": "中品唯求自利。",
    "X22n0414_001:0451b21_9": "縱不生疑惑。",
    "X22n0414_001:0451b22_10": "要為不了佛智。",
    "X22n0414_001:0451b22_11": "故在胎化之間。",
    "X22n0414_001:0451b22_12": "下品末後迴心。",
    "X22n0414_001:0451b23_13": "處華胎中。",
    "X22n0414_001:0451b23_14": "自七七日以往。",
    "X22n0414_001:0451b23_15": "至十二大劫。",
    "X22n0414_001:0451b23_16": "並是大本胎生所攝。",
    "X22n0414_001:0451b24_17": "天台以此經九品當大本三輩。",
    "X22n0414_001:0451b24_18": "當知不爾。",
    "X22n0414_001:0451c01_0": "彼之三輩。",
    "X22n0414_001:0451c01_1": "純是化生。",
    "X22n0414_001:0451c01_2": "其胎生者。",
    "X22n0414_001:0451c01_3": "未嘗不信罪福。",
    "X22n0414_001:0451c01_4": "修習善本。",
    "X22n0414_001:0451c02_5": "由不信佛智。",
    "X22n0414_001:0451c02_6": "尚墮疑城。",
    "X22n0414_001:0451c02_7": "此經下品積惡已稔。",
    "X22n0414_001:0451c02_8": "縱不生疑城。",
    "X22n0414_001:0451c03_9": "定在邊地。",
    "X22n0414_001:0451c03_10": "去化生諸輩甚遠。",
    "X22n0414_001:0451c03_11": "然則五逆謗法。",
    "X22n0414_001:0451c04_12": "大本三輩不收者。",
    "X22n0414_001:0451c04_13": "為簡胎生故。",
    "X22n0414_001:0451c04_14": "此經并收者。",
    "X22n0414_001:0451c04_15": "不棄胎生故。",
    "X22n0414_001:0451c05_16": "以此分判兩經。",
    "X22n0414_001:0451c05_17": "始無違礙。",
    "X22n0414_001:0451c05_18": "又天台謂行有散定。",
    "X22n0414_001:0451c06_19": "大本論散善。",
    "X22n0414_001:0451c06_20": "故言五逆謗法不得往生。",
    "X22n0414_001:0451c06_21": "此經明觀。",
    "X22n0414_001:0451c07_0": "故說得生。",
    "X22n0414_001:0451c07_1": "是又不爾。",
    "X22n0414_001:0451c07_2": "淨觀成時。",
    "X22n0414_001:0451c07_3": "方名定善。",
    "X22n0414_001:0451c07_4": "末品唯稱佛名。",
    "X22n0414_001:0451c08_5": "具足十念。",
    "X22n0414_001:0451c08_6": "與大本十念何異。",
    "X22n0414_001:0451c08_7": "強分定散。",
    "X22n0414_001:0451c08_8": "竊所未喻。",
    "X22n0414_001:0451c09_9": "如斯等輩所以得生者。",
    "X22n0414_001:0451c09_10": "此在當人創發信心。",
    "X22n0414_001:0451c09_11": "一念迴光。",
    "X22n0414_001:0451c10_12": "勇猛精進。",
    "X22n0414_001:0451c10_13": "還與久修行人無有差別。",
    "X22n0414_001:0451c10_14": "以諸佛法身。",
    "X22n0414_001:0451c11_15": "在聖不增。",
    "X22n0414_001:0451c11_16": "在凡不減。",
    "X22n0414_001:0451c11_17": "唯藉緣因。",
    "X22n0414_001:0451c11_18": "得顯發故。",
    "X22n0414_001:0451c11_19": "如前地觀既成。",
    "X22n0414_001:0451c12_20": "除八十億劫生死之罪。",
    "X22n0414_001:0451c12_21": "而末二品但聞阿彌陀佛十力威德。",
    "X22n0414_001:0451c13_22": "及稱佛名具足十念。",
    "X22n0414_001:0451c13_23": "罪滅福生。",
    "X22n0414_001:0451c13_24": "還同彼效。",
    "X22n0414_001:0451c14_25": "故知時無久暫。",
    "X22n0414_001:0451c14_26": "修無淺深。",
    "X22n0414_001:0451c14_27": "但得正念堅強。",
    "X22n0414_001:0451c14_28": "決定功成指顧。",
    "X22n0414_001:0451c15_29": "下品中人。",
    "X22n0414_001:0451c15_30": "要以信有罪福為因。",
    "X22n0414_001:0451c15_31": "故終得罪滅福生之果。",
    "X22n0414_001:0451c16_32": "苟于此不信。",
    "X22n0414_001:0451c16_33": "雖疑城邊地。",
    "X22n0414_001:0451c16_34": "其可得而生邪。",
    "X22n0414_001:0451c17_35": "問。",
    "X22n0414_001:0451c17_36": "十三觀以前。",
    "X22n0414_001:0451c17_37": "俱明觀法。",
    "X22n0414_001:0451c17_38": "而九品往生。",
    "X22n0414_001:0451c17_39": "却不及觀。",
    "X22n0414_001:0451c18_0": "是往生人必須修觀邪。",
    "X22n0414_001:0451c18_1": "抑不盡然邪。",
    "X22n0414_001:0451c18_2": "答。",
    "X22n0414_001:0451c18_3": "此有專修兼修之別。",
    "X22n0414_001:0451c19_4": "十三觀以前。",
    "X22n0414_001:0451c19_5": "多是專修。",
    "X22n0414_001:0451c19_6": "九品多是兼修。",
    "X22n0414_001:0451c19_7": "迴向願求。",
    "X22n0414_001:0451c20_8": "一日乃至七日。",
    "X22n0414_001:0451c20_9": "觀在其中。",
    "X22n0414_001:0451c20_10": "至生品之高下。",
    "X22n0414_001:0451c20_11": "則視其發心之廣狹。",
    "X22n0414_001:0451c21_12": "解行之淺深。",
    "X22n0414_001:0451c21_13": "不盡繫乎專與兼也。",
    "X22n0414_001:0451c21_14": "然欲現生見佛。",
    "X22n0414_001:0451c22_15": "則專修為勝。",
    "X22n0414_001:0451c22_16": "如第九觀成時。",
    "X22n0414_001:0451c22_17": "得見無量諸佛現前授記。",
    "X22n0414_001:0451c23_18": "視上品上生。",
    "X22n0414_001:0451c23_19": "必待生後授記者。",
    "X22n0414_001:0451c23_20": "更為增進。",
    "X22n0414_001:0451c24_21": "持名一法。",
    "X22n0414_001:0451c24_22": "亦復如是。",
    "X22n0414_001:0451c24_23": "若非念茲在茲。",
    "X22n0414_001:0451c24_24": "安得一心不亂。",
    "X22n0414_001:0452a01_25": "但得一心。",
    "X22n0414_001:0452a01_26": "見佛不難矣。",
    "X22n0414_001:0452a01_27": "九品之文。",
    "X22n0414_001:0452a01_28": "總名曰觀者。",
    "X22n0414_001:0452a02_0": "為令行者具決擇智。",
    "X22n0414_001:0452a02_1": "發精進心。",
    "X22n0414_001:0452a02_2": "舍下趨高。",
    "X22n0414_001:0452a02_3": "背小向大。",
    "X22n0414_001:0452a03_0": "且令知如來願力所持。",
    "X22n0414_001:0452a03_1": "無機不被故。",
    "X22n0414_001:0452a03_2": "問。",
    "X22n0414_001:0452a03_3": "現前授記者。",
    "X22n0414_001:0452a04_0": "既高出上生。",
    "X22n0414_001:0452a04_1": "是九品之上。",
    "X22n0414_001:0452a04_2": "復有一品邪。",
    "X22n0414_001:0452a04_3": "答。",
    "X22n0414_001:0452a04_4": "前文言舍身他世。",
    "X22n0414_001:0452a05_5": "得無生忍。",
    "X22n0414_001:0452a05_6": "正與上生等。",
    "X22n0414_001:0452a05_7": "自茲以往。",
    "X22n0414_001:0452a05_8": "分證三身。",
    "X22n0414_001:0452a06_0": "十方佛國。",
    "X22n0414_001:0452a06_1": "隨往無礙。",
    "X22n0414_001:0452a06_2": "非九品所能攝矣。",
    "X22n0414_001:0452a06_3": "問。",
    "X22n0414_001:0452a06_4": "下品華開。",
    "X22n0414_001:0452a07_0": "即發無上道心。",
    "X22n0414_001:0452a07_1": "視中品僅證聲聞者轉勝。",
    "X22n0414_001:0452a07_2": "何也。",
    "X22n0414_001:0452a07_3": "答。",
    "X22n0414_001:0452a07_4": "此由臨終畏罪。",
    "X22n0414_001:0452a08_5": "發勇猛心故。",
    "X22n0414_001:0452a08_6": "又處華胎日久。",
    "X22n0414_001:0452a08_7": "如遊香國。",
    "X22n0414_001:0452a09_0": "身有香氣故。",
    "X22n0414_001:0452a09_1": "且善人不少鈍根。",
    "X22n0414_001:0452a09_2": "惡人亦有利根。",
    "X22n0414_001:0452a09_3": "一聞即信。",
    "X22n0414_001:0452a10_4": "由根利故。",
    "X22n0414_001:0452a10_5": "僅證聲聞。",
    "X22n0414_001:0452a10_6": "由根鈍故。",
    "X22n0414_001:0452a10_7": "雖有願求。",
    "X22n0414_001:0452a10_8": "不急切故。",
    "X22n0414_001:0452a11_9": "然下品雖發道心。",
    "X22n0414_001:0452a11_10": "證果尚遠。",
    "X22n0414_001:0452a11_11": "中品既證聲聞。",
    "X22n0414_001:0452a11_12": "但發無上道心。",
    "X22n0414_001:0452a12_13": "現前亦得授記。",
    "X22n0414_001:0452a12_14": "如法華會上舍利弗等。",
    "X22n0414_001:0452a13_0": "成佛何疑。",
    "X22n0414_001:0452a13_1": "故知大小本無定位。",
    "X22n0414_001:0452a13_2": "經特約舉其凡耳。",
    "X22n0414_001:0452a13_3": "問。",
    "X22n0414_001:0452a14_0": "疑城中人。",
    "X22n0414_001:0452a14_1": "亦得預九品否。",
    "X22n0414_001:0452a14_2": "答。",
    "X22n0414_001:0452a14_3": "但發道心。",
    "X22n0414_001:0452a14_4": "去佛不遠。",
    "X22n0414_001:0452a14_5": "得預九品。",
    "X22n0414_001:0452a15_6": "如大本言。",
    "X22n0414_001:0452a15_7": "若此眾生識其本罪。",
    "X22n0414_001:0452a15_8": "深自悔責。",
    "X22n0414_001:0452a15_9": "求離彼處。",
    "X22n0414_001:0452a16_10": "即得如意往詣無量壽佛所。",
    "X22n0414_001:0452a16_11": "恭敬供養者是。",
    "X22n0414_001:0452a17_0": "不發道心。",
    "X22n0414_001:0452a17_1": "無緣見佛。",
    "X22n0414_001:0452a17_2": "難期入品。",
    "X22n0414_001:0452a17_3": "以下品並發道心。",
    "X22n0414_001:0452a17_4": "非懈慢者所能及故。",
    "X22n0414_001:0452a19_0": "此經雖屬漸門。",
    "X22n0414_001:0452a19_1": "亦攝頓教。",
    "X22n0414_001:0452a19_2": "雖明權乘。",
    "X22n0414_001:0452a19_3": "尤尚圓修。",
    "X22n0414_001:0452a19_4": "如觀佛章既直指心宗。",
    "X22n0414_001:0452a20_5": "上品章又頻提大乘。",
    "X22n0414_001:0452a20_6": "是故聞者。",
    "X22n0414_001:0452a20_7": "或得無生法忍。",
    "X22n0414_001:0452a21_8": "或發無上道心。",
    "X22n0414_001:0452a21_9": "皆由此經功德不可思議。",
    "X22n0414_001:0452a22_10": "阿彌陀佛威神加被。",
    "X22n0414_001:0452a22_11": "亦不可思議。",
    "X22n0414_001:0452a22_12": "問。",
    "X22n0414_001:0452a22_13": "天台謂此經為頓。",
    "X22n0414_001:0452a23_14": "今以為漸。",
    "X22n0414_001:0452a23_15": "何也。",
    "X22n0414_001:0452a23_16": "答。",
    "X22n0414_001:0452a23_17": "約化儀論。",
    "X22n0414_001:0452a23_18": "唯華嚴屬頓。",
    "X22n0414_001:0452a23_19": "餘俱屬漸。",
    "X22n0414_001:0452a24_20": "此經方等所收。",
    "X22n0414_001:0452a24_21": "是漸非頓。",
    "X22n0414_001:0452a24_22": "又諸經中。",
    "X22n0414_001:0452a24_23": "純談實相為頓。",
    "X22n0414_001:0452b01_24": "曲施方便為漸。",
    "X22n0414_001:0452b01_25": "漸即屬權。",
    "X22n0414_001:0452b01_26": "頓乃名實。",
    "X22n0414_001:0452b01_27": "然漸中有頓。",
    "X22n0414_001:0452b02_28": "權中有實。",
    "X22n0414_001:0452b02_29": "但了一心。",
    "X22n0414_001:0452b02_30": "更無餘法。",
    "X22n0414_001:0452b02_31": "天台所判。",
    "X22n0414_001:0452b02_32": "故有深指。",
    "X22n0414_001:0452b04_0": "四釋流通分者。",
    "X22n0414_001:0452b04_1": "自爾時阿難至禮佛而退。",
    "X22n0414_001:0452b04_2": "名流通分。",
    "X22n0414_001:0452b05_0": "經以觀名。",
    "X22n0414_001:0452b05_1": "而下品中持名功德。",
    "X22n0414_001:0452b05_2": "與修觀等。",
    "X22n0414_001:0452b05_3": "流通分中重讚聞名功德。",
    "X22n0414_001:0452b06_4": "葢觀從心起。",
    "X22n0414_001:0452b06_5": "名自佛生。",
    "X22n0414_001:0452b06_6": "以觀攝心。",
    "X22n0414_001:0452b06_7": "全心是佛。",
    "X22n0414_001:0452b07_8": "以名召佛。",
    "X22n0414_001:0452b07_9": "全佛是心。",
    "X22n0414_001:0452b07_10": "直下知歸。",
    "X22n0414_001:0452b07_11": "不一不異。",
    "X22n0414_001:0452b07_12": "全身拶入。",
    "X22n0414_001:0452b08_13": "無欠無餘。",
    "X22n0414_001:0452b09_0": "觀量無壽佛經約論(終)"
}