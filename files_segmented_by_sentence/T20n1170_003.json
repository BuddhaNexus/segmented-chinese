[
    {
        "source_sentence": "佛說金剛香菩薩大明成就儀軌",
        "from": "T20n1170_003:0698c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經卷下",
        "from": "T20n1170_003:0698c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T20n1170_003:0698c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯復次行人。",
        "from": "T20n1170_003:0698c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲作最上曼拏羅轉法輪相者。",
        "from": "T20n1170_003:0698c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人先須自運志誠之心。",
        "from": "T20n1170_003:0698c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向無上菩提。",
        "from": "T20n1170_003:0698c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後擇取勝地。",
        "from": "T20n1170_003:0698c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝地者謂聖賢住處。",
        "from": "T20n1170_003:0698c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或聖賢古跡之地。",
        "from": "T20n1170_003:0698c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或古寺天祠。",
        "from": "T20n1170_003:0698c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或近有寶之處。",
        "from": "T20n1170_003:0698c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或河岸或池側。",
        "from": "T20n1170_003:0698c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸清淨之地。",
        "from": "T20n1170_003:0698c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得是地已發歡喜心。",
        "from": "T20n1170_003:0698c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於阿闍梨起如佛想。",
        "from": "T20n1170_003:0698c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作禮供養請於建曼拏羅處。",
        "from": "T20n1170_003:0698c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦明結界已。",
        "from": "T20n1170_003:0698c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後可於此地作曼拏羅。",
        "from": "T20n1170_003:0698c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於曼拏羅中。",
        "from": "T20n1170_003:0698c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫本尊金剛香菩薩。",
        "from": "T20n1170_003:0698c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作忿怒相或大笑相。",
        "from": "T20n1170_003:0698c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四面面有三目。",
        "from": "T20n1170_003:0698c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目放大光光如劫火。",
        "from": "T20n1170_003:0698c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十二臂。",
        "from": "T20n1170_003:0698c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以八大龍王及眾寶衣裝嚴其身。",
        "from": "T20n1170_003:0698c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光焰熾盛現大惡相或大笑相。",
        "from": "T20n1170_003:0698c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手頭指直竪安當心。",
        "from": "T20n1170_003:0698c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘手執捉器仗。",
        "from": "T20n1170_003:0698c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂金剛杵鉤槍劍弓箭寶瓶三叉髑髏羂索等。",
        "from": "T20n1170_003:0698c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是畫降三界相。",
        "from": "T20n1170_003:0698c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩東邊。",
        "from": "T20n1170_003:0698c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫摩醯濕嚩囉天。",
        "from": "T20n1170_003:0698c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南邊畫那羅延天。",
        "from": "T20n1170_003:0698c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西邊畫迦哩底枳野天。",
        "from": "T20n1170_003:0698c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北邊畫烏摩女天。",
        "from": "T20n1170_003:0698c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於內四隅畫大梵天吉祥天帝釋天及部多主。",
        "from": "T20n1170_003:0698c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於曼拏羅外四隅。",
        "from": "T20n1170_003:0698c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫七母鬼及曩致濕嚩囕。",
        "from": "T20n1170_003:0698c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩賀迦攞。",
        "from": "T20n1170_003:0698c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尾曩野迦等。",
        "from": "T20n1170_003:0698c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復畫部多及龍夜叉。",
        "from": "T20n1170_003:0698c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必舍左吠多拏塞建度。",
        "from": "T20n1170_003:0698c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏摩捺阿鉢娑摩囉誐嚕拏等。",
        "from": "T20n1170_003:0698c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是依法次第。",
        "from": "T20n1170_003:0698c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫曼拏羅。",
        "from": "T20n1170_003:0698c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及菩薩已。",
        "from": "T20n1170_003:0698c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即行人自潔淨著赤色衣。",
        "from": "T20n1170_003:0698c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入曼拏羅請本尊及諸賢聖。",
        "from": "T20n1170_003:0698c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先結金剛香菩薩印及誦大明。",
        "from": "T20n1170_003:0698c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請菩薩降臨曼拏羅。",
        "from": "T20n1170_003:0699a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次句召曼拏羅內諸天及賢聖等。",
        "from": "T20n1170_003:0699a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各依次第結印誦大明句召。",
        "from": "T20n1170_003:0699a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想降臨已。",
        "from": "T20n1170_003:0699a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即奉獻閼伽及香花等已。",
        "from": "T20n1170_003:0699a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後說所求事以求成就初得勝地結界。",
        "from": "T20n1170_003:0699a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明曰。",
        "from": "T20n1170_003:0699a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引曩謨引婆誐嚩底一嚩日囉二合巘引駄引哩引二𠸪叉三𠸪叉四摩賀引𠸪叉五烏哩馱二合滿駄六遏唐滿馱七禰舍引滿馱八娑囉九娑囉十嚩日囉二合入嚩二合引攞引摩引里禰十一吽引發吒半音十二結界作曼拏羅畫像已。",
        "from": "T20n1170_003:0699a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人初入曼拏羅誦此大明。",
        "from": "T20n1170_003:0699a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明亦名句召明。",
        "from": "T20n1170_003:0699a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引囉怛曩二合怛囉二合夜引野摩賀引嚩日囉二合巘引馱引哩引一阿謨引伽伊係曳二合引呬二阿鉢囉二合底賀多伊呬三阿引誐蹉婆誐嚩底尸伽囕二合四阿引尾舍阿引尾舍五鉢囉二合尾舍鉢囉二合尾舍六吽引𠺁吽引發吒半音娑嚩二合賀引七誦此明已復誦根本大明曰。",
        "from": "T20n1170_003:0699a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引一紇哩二合引二吽引三誦此明已復誦根本心明曰。",
        "from": "T20n1170_003:0699a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引一吽引二阿引烏當切吽引三誦此明已復誦句召大明曰。",
        "from": "T20n1170_003:0699a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引曩謨引囉怛曩二合怛囉二合夜引野引一曩莫室贊二合拏嚩日囉二合播引拏曳引二摩賀引藥叉枲引曩引鉢多曳引三唵引阿謨伽俱舍引曳引四阿鉢囉二合底賀多舍引娑曩引曳引五紇哩二合引六羯囉七羯囉八羯茶九羯茶十吽𠺁吽發吒半音十一誦此明已。",
        "from": "T20n1170_003:0699a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想菩薩降臨曼拏羅已又想菩薩有種種字輪裝嚴其身。",
        "from": "T20n1170_003:0699b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初想。",
        "from": "T20n1170_003:0699b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈁴唵􆱘勃哩二合􄓚吒􅁥娑嚩二合引􄚩賀　在菩薩頂次想。",
        "from": "T20n1170_003:0699b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈊹吽􄗁發􈁆吒　字在菩薩頭。",
        "from": "T20n1170_003:0699b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想。",
        "from": "T20n1170_003:0699b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈁴唵􆷵娑普二合􄙂嚕􅁥娑嚩二合引􄚩賀引　字在菩薩兩眼次想。",
        "from": "T20n1170_003:0699b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􄮦紇哩二合􄖩曩􄗰莫􅁥娑嚩二合引􄚩賀引　字在菩薩心次想。",
        "from": "T20n1170_003:0699b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􄕙帝􈁵乞叉拏三合􄙘尾􄒶惹􄗴曳引􄚳郝　字為菩薩種種種嚴身鎧甲次想。",
        "from": "T20n1170_003:0699b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈁴唵引􈊹吽引􄗁發􈁆吒半音　字為菩薩所執種種器仗次想。",
        "from": "T20n1170_003:0699b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為菩薩初忿怒相。",
        "from": "T20n1170_003:0699b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想。",
        "from": "T20n1170_003:0699b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈊹吽引􄗁發􈁆吒半音　大明字為菩薩大忿怒相次想。",
        "from": "T20n1170_003:0699b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈁴唵引􄪼鉢囉二合􄑼贊􆧽拏􄙜吠引􄑘誐􄕼馱引􄙀哩􄕍抳引􇩵紇哩引二合􈊹吽引􄚳郝此大明字為菩薩根本極忿怒相。",
        "from": "T20n1170_003:0699b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想菩薩誦微妙大明曰。",
        "from": "T20n1170_003:0699b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈁴唵引􈆰暗􄧇惹𭍌二合􈊹吽引次想菩薩誦能破壞一切大明曰。",
        "from": "T20n1170_003:0699c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈁴唵引􄧇惹𭍌二合􅁯莎嚩二合如是作觀智。",
        "from": "T20n1170_003:0699c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一一現前已。",
        "from": "T20n1170_003:0699c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人身心歡喜。",
        "from": "T20n1170_003:0699c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以頭面作禮。",
        "from": "T20n1170_003:0699c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即捧閼伽獻菩薩。",
        "from": "T20n1170_003:0699c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻閼伽明曰。",
        "from": "T20n1170_003:0699c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引薩哩嚩二合悉提引毘踰二合引曩莫娑嚩二合賀引燒香獻菩薩明曰。",
        "from": "T20n1170_003:0699c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引曩謨婆誐嚩底一度半仡哩二合恨拏二合二悉馱三摩曳引三吽引曩莫娑嚩二合賀四獻花明曰。",
        "from": "T20n1170_003:0699c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引室哩二合引攞剎彌二合引一鉢囉二合底仡哩二合恨拏二合𤚥切身二踰鉢儞擔三補澁波二合娑嚩二合賀引四獻燈明曰。",
        "from": "T20n1170_003:0699c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引入嚩二合攞娑嚩二合引賀引一獻塗香明曰。",
        "from": "T20n1170_003:0699c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引戍毘引一戍毘引二巘馱嚩引悉儞引三巘馱引哩四巘馱必哩二合曳引娑嚩二合賀引五獻食明曰。",
        "from": "T20n1170_003:0699c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引禰麼也二合末隷引囉引惹引野一禰引呬禰呬二娑嚩二合賀引三如是種種奉獻供養已。",
        "from": "T20n1170_003:0699c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次求菩薩施於歡喜。",
        "from": "T20n1170_003:0699c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦明曰。",
        "from": "T20n1170_003:0699c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引曩謨嚩日囉二合巘引馱引哩一虎盧二虎盧三底瑟姹二合四底瑟姹二合五吽發吒半音六誦此明已。",
        "from": "T20n1170_003:0699c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想於菩薩得施歡喜。",
        "from": "T20n1170_003:0699c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後行人隨意作法。",
        "from": "T20n1170_003:0699c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求意願悉獲成就。",
        "from": "T20n1170_003:0699c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說能調難調大忿怒印相。",
        "from": "T20n1170_003:0700a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂印以二手平掌。",
        "from": "T20n1170_003:0700a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指如鉢。",
        "from": "T20n1170_003:0700a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二無名指安中指第三節。",
        "from": "T20n1170_003:0700a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二拇指屈入掌作拳成印。",
        "from": "T20n1170_003:0700a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印時。",
        "from": "T20n1170_003:0700a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想大明字相在菩薩頂。",
        "from": "T20n1170_003:0700a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼印不改前印。",
        "from": "T20n1170_003:0700a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒二頭指成印。",
        "from": "T20n1170_003:0700a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印時想大明字相。",
        "from": "T20n1170_003:0700a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在菩薩兩眼。",
        "from": "T20n1170_003:0700a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鎧甲印以二手作拳。",
        "from": "T20n1170_003:0700a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想如鵝翅相成印。",
        "from": "T20n1170_003:0700a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印時。",
        "from": "T20n1170_003:0700a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想大明成鎧甲。",
        "from": "T20n1170_003:0700a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被本尊身而為裝嚴。",
        "from": "T20n1170_003:0700a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "器仗印以右手作拳。",
        "from": "T20n1170_003:0700a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以拇指捏頭指甲成印。",
        "from": "T20n1170_003:0700a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印時想。",
        "from": "T20n1170_003:0700a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明成諸器仗在本尊手。",
        "from": "T20n1170_003:0700a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此亦名心印。",
        "from": "T20n1170_003:0700a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名根本忿怒印。",
        "from": "T20n1170_003:0700a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定金剛鉤印以二手作拳。",
        "from": "T20n1170_003:0700a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指相結。",
        "from": "T20n1170_003:0700a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指展舒相交。",
        "from": "T20n1170_003:0700a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右頭指屈如鉤成印。",
        "from": "T20n1170_003:0700a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛索印以無名指與頭指。",
        "from": "T20n1170_003:0700a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作執索勢成印。",
        "from": "T20n1170_003:0700a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鈴印以右手作拳。",
        "from": "T20n1170_003:0700a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作搖動勢成印。",
        "from": "T20n1170_003:0700a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻閼伽印以二手合掌。",
        "from": "T20n1170_003:0700a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如捧物勢成印。",
        "from": "T20n1170_003:0700a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻花印以二手作合掌。",
        "from": "T20n1170_003:0700a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二中指入掌內成印。",
        "from": "T20n1170_003:0700a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻香印不改前印。",
        "from": "T20n1170_003:0700a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相屈二中指頭成印。",
        "from": "T20n1170_003:0700a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻塗香印以左手平掌展舒成印。",
        "from": "T20n1170_003:0700b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻燈印以二手屈指。",
        "from": "T20n1170_003:0700b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展舒二小指成印。",
        "from": "T20n1170_003:0700b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻花鬘印以二手仰掌。",
        "from": "T20n1170_003:0700b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如嫩蓮花成印。",
        "from": "T20n1170_003:0700b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破壞一切魔障印以二手當心各作拳。",
        "from": "T20n1170_003:0700b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以左手拇指捏小指甲。",
        "from": "T20n1170_003:0700b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展舒餘指成印。",
        "from": "T20n1170_003:0700b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根本忿怒印立身如舞勢。",
        "from": "T20n1170_003:0700b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左手拇指捻小指。",
        "from": "T20n1170_003:0700b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如軍持相安於心上。",
        "from": "T20n1170_003:0700b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手竪立展指。",
        "from": "T20n1170_003:0700b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如󰻬相口誦吽字成印。",
        "from": "T20n1170_003:0700b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印能除大魔。",
        "from": "T20n1170_003:0700b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能句召能開修羅窟。",
        "from": "T20n1170_003:0700b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能驚怖諸龍能却他軍能斷他呪。",
        "from": "T20n1170_003:0700b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大忿怒印立身如舞勢。",
        "from": "T20n1170_003:0700b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手各作拳二臂相交。",
        "from": "T20n1170_003:0700b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪左拳安心上。",
        "from": "T20n1170_003:0700b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右拳亦竪立作忿怒相。",
        "from": "T20n1170_003:0700b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口誦吽字成印。",
        "from": "T20n1170_003:0700b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印作大降伏用。",
        "from": "T20n1170_003:0700b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能怖一切大魔及大夜叉囉叉等。",
        "from": "T20n1170_003:0700b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持數珠印以二手各以拇指與頭指相捻成印。",
        "from": "T20n1170_003:0700b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印時誦根本心明同用。",
        "from": "T20n1170_003:0700b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令梵天或那羅延天。",
        "from": "T20n1170_003:0700b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或摩醯濕嚩囉天等出現。",
        "from": "T20n1170_003:0700b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或令入寤。",
        "from": "T20n1170_003:0700b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是最上曼拏羅法。",
        "from": "T20n1170_003:0700b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及能調難調諸印相等。",
        "from": "T20n1170_003:0700b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨所欲傳授者必須審察。",
        "from": "T20n1170_003:0700b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許授與諸不忠不孝。",
        "from": "T20n1170_003:0700b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敬三寶不修眾善。",
        "from": "T20n1170_003:0700b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及患諸惡疾者。",
        "from": "T20n1170_003:0700b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是等之人亦不許令聞。",
        "from": "T20n1170_003:0700b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1170_003:0700b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之人。",
        "from": "T20n1170_003:0700b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以惡業故。",
        "from": "T20n1170_003:0700b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聞是法返生輕謗於當來世獲大苦報。",
        "from": "T20n1170_003:0700b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說金剛香三昧大明成就法。",
        "from": "T20n1170_003:0700b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說三昧大明曰。",
        "from": "T20n1170_003:0700c01_2",
        "context_with_next_sentence": true
    },
    {
