        "from": "T20n1170_003:0702a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成就一切事。",
        "from": "T20n1170_003:0702a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人欲作種種成就法者。",
        "from": "T20n1170_003:0702a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須受此三昧如法修習已。",
        "from": "T20n1170_003:0702a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於十四日持齋戒潔淨已。",
        "from": "T20n1170_003:0702a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至夜分時於舍利塔前。",
        "from": "T20n1170_003:0702a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明一千八遍。",
        "from": "T20n1170_003:0702a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後作種種法者皆得成就。",
        "from": "T20n1170_003:0702a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人欲起曼拏羅者。",
        "from": "T20n1170_003:0702a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須揀擇清淨之處。",
        "from": "T20n1170_003:0702a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或塔前或尸陀林中。",
        "from": "T20n1170_003:0702a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或大樹下或四衢道中。",
        "from": "T20n1170_003:0702a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揀得地已。",
        "from": "T20n1170_003:0702a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用瞿摩夷塗曼拏羅。",
        "from": "T20n1170_003:0702a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用五色粉作界道。",
        "from": "T20n1170_003:0702a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成四方開四門。",
        "from": "T20n1170_003:0702a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依金剛香菩薩儀安布賢聖位。",
        "from": "T20n1170_003:0702a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於賢聖位處各安幖幟。",
        "from": "T20n1170_003:0702a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安布位已。",
        "from": "T20n1170_003:0702a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力備辦種種香花而為供養。",
        "from": "T20n1170_003:0702a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四門外各安一所寶瓶。",
        "from": "T20n1170_003:0702a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓶中滿貯。",
        "from": "T20n1170_003:0702a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香水復備殊妙飲食。",
        "from": "T20n1170_003:0702a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四門外各置一分而為供養。",
        "from": "T20n1170_003:0702a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種安布定已。",
        "from": "T20n1170_003:0702a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人即於曼拏羅前東南位。",
        "from": "T20n1170_003:0702a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地結金剛鉤印。",
        "from": "T20n1170_003:0702a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦心明一百八遍。",
        "from": "T20n1170_003:0702a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼大自在天及一切天等。",
        "from": "T20n1170_003:0702a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其句召速來入曼拏羅中。",
        "from": "T20n1170_003:0702a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜而住。",
        "from": "T20n1170_003:0702a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其金剛鉤印。",
        "from": "T20n1170_003:0702a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左手展舒。",
        "from": "T20n1170_003:0702a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以頭指如鉤。",
        "from": "T20n1170_003:0702a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安腰側成印。",
        "from": "T20n1170_003:0702a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印時即誦句召心明曰。",
        "from": "T20n1170_003:0702a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引曩謨嚩日囉二合播引拏曳引一唵引伊係曳二合引呬二覩嚕覩嚕三嚩日囕二合引俱始娑嚩二合賀引四係引𤚥切身引俱始娑嚩二合引賀引五誦此明時。",
        "from": "T20n1170_003:0702b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當結前印兼加吽字。",
        "from": "T20n1170_003:0702b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加於童男童女頸及頭者。",
        "from": "T20n1170_003:0702b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼男女即入寤。",
        "from": "T20n1170_003:0702b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以鉢安曼拏羅中。",
        "from": "T20n1170_003:0702b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸賢聖前。",
        "from": "T20n1170_003:0702b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設諸香花而作供養。",
        "from": "T20n1170_003:0702b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲令訥哩誐天女。",
        "from": "T20n1170_003:0702b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來入鉢中者。",
        "from": "T20n1170_003:0702b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人立身如舞勢。",
        "from": "T20n1170_003:0702b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安息香誦心明。",
        "from": "T20n1170_003:0702b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及結句召印。",
        "from": "T20n1170_003:0702b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼天女即速來入鉢中。",
        "from": "T20n1170_003:0702b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說所求事。",
        "from": "T20n1170_003:0702b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求本尊金剛香菩薩降臨者。",
        "from": "T20n1170_003:0702b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前結印誦明專注。",
        "from": "T20n1170_003:0702b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不散亂觀想菩薩。",
        "from": "T20n1170_003:0702b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩須臾來降鉢中。",
        "from": "T20n1170_003:0702b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身赤色面相圓滿。",
        "from": "T20n1170_003:0702b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種莊嚴作歡喜相。",
        "from": "T20n1170_003:0702b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀於行人目不暫捨。",
        "from": "T20n1170_003:0702b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦行人得菩薩如是降臨歡喜已。",
        "from": "T20n1170_003:0702b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即別設上妙香花而為供養。",
        "from": "T20n1170_003:0702b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說所求事必獲成就。",
        "from": "T20n1170_003:0702b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人即誦金剛鎖明。",
        "from": "T20n1170_003:0702b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以求安住。",
        "from": "T20n1170_003:0702b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鎖明曰。",
        "from": "T20n1170_003:0702b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨囉怛曩二合怛囉二合夜引野一曩莫室戰二合拏二嚩日囉二合播拏曳三引摩賀引藥乞叉二合四枲曩引鉢多曳引五俱嚕俱嚕六拶吒拶吒七拶攞拶攞八娑囉娑囉九底瑟吒底瑟吒十摩賀引嚩攞十一三摩曳引滿耨娑摩二合囉十二悉馱室戰二合拏十三嚩日囉二合播引尼十四囉倪也二合引鉢野儞娑嚩二合引賀引十五若以此明加持安息香。",
        "from": "T20n1170_003:0702b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作三丸如蓮子。",
        "from": "T20n1170_003:0702b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用丸搵芥子油。",
        "from": "T20n1170_003:0702b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲火中作護摩者。",
        "from": "T20n1170_003:0702b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一切成就。",
        "from": "T20n1170_003:0702b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得成就已。",
        "from": "T20n1170_003:0702b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後禮謝菩薩。",
        "from": "T20n1170_003:0702b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法發遣奉送。",
        "from": "T20n1170_003:0702b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復若以此明加持花及水。",
        "from": "T20n1170_003:0702b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散灑宿曜者。",
        "from": "T20n1170_003:0702b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即速禁縛。",
        "from": "T20n1170_003:0702b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說大明曰。",
        "from": "T20n1170_003:0702b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引嚩日囉二合播引抳一攞攞賀引枲二賀引三嚩日哩二合尼四嚕囉嚕囉五劍波劍波六左攞左攞七惹攞波二合惹攞波八娑嚩二合引賀引若欲令鉢說一切事者。",
        "from": "T20n1170_003:0702b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明七遍。",
        "from": "T20n1170_003:0702b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持香水灑鉢。",
        "from": "T20n1170_003:0702b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉢即有聲說一切事。",
        "from": "T20n1170_003:0702b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或被宿曜執持不說事者。",
        "from": "T20n1170_003:0702c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即復加誦此明必有聲說事。",
        "from": "T20n1170_003:0702c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰。",
        "from": "T20n1170_003:0702c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引嚩日囉二合引地播引怛囉二引怛囉二合吒半音誦此明時并用印。",
        "from": "T20n1170_003:0702c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手作金剛拳打鉢。",
        "from": "T20n1170_003:0702c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼執持宿曜。",
        "from": "T20n1170_003:0702c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大明威力即速現身。",
        "from": "T20n1170_003:0702c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得出現已。",
        "from": "T20n1170_003:0702c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以二手作金剛拳當心。",
        "from": "T20n1170_003:0702c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作忿怒相如欲打勢。",
        "from": "T20n1170_003:0702c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復報言汝應作舞後當說事。",
        "from": "T20n1170_003:0702c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼即作舞舞已說事。",
        "from": "T20n1170_003:0702c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以氷誐攞大明。",
        "from": "T20n1170_003:0702c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持水三合。",
        "from": "T20n1170_003:0702c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑宿曜身即得解脫。",
        "from": "T20n1170_003:0702c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復用妙花獻彼宿曜。",
        "from": "T20n1170_003:0702c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復用氷誐攞大明。",
        "from": "T20n1170_003:0702c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發遣令還本宮。",
        "from": "T20n1170_003:0702c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氷誐攞大明曰。",
        "from": "T20n1170_003:0702c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引囉怛曩二合怛囉二合夜引野一曩謨室戰二引拏嚩日囉二合播拏曳引二摩賀引藥叉枲引曩引鉢多曳引三祖盧祖盧四誐蹉誐蹉五摩賀引佐攞娑嚩二合賀引六布曩囉引誐摩曩引野七俱嚕俱嚕八誐蹉誐蹉娑嚩二合引賀引九誦此七遍加持沈香焚燒。",
        "from": "T20n1170_003:0702c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同用發遣。",
        "from": "T20n1170_003:0702c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說金剛香菩薩速行大明曰。",
        "from": "T20n1170_003:0702c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引嚩日囉二合播引拏曳引一鉢野鉢野二誐蹉誐蹉三婆誐嚩底四摩賀引藥叉引地鉢底五尾引哩引六唧哩唧哩七呬哩呬哩八阿尾覲曩二合俱嚕娑嚩二合引賀引九復說大明曰。",
        "from": "T20n1170_003:0702c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引囉怛曩二合怛囉二合夜引野一曩莫室戰二合拏二嚩日囉二合播引拏曳引三摩賀引藥叉枲引曩引鉢多曳引四曩謨引婆誐嚩怛曳二合引五摩賀引嚩日囉二合巘引馱引哩曳二合引六阿儞引迦囉濕彌二合七設多娑賀娑囉二合八鉢囉二合入嚩二合隷多九禰鉢多二合帝引惹引曳十嘮捺囉二合捺哩沙二合曩引曳引十一尾迦囉引攞引曳引十二贊拏引曳引十三拶波攞曳引十四摩賀引瑜引藝濕嚩二合哩引曳引十五沃仡囉二合鼻引摩十六婆野引曩引曳引十七沙吒目二合佉引曳引十八訥嚩二合引捺舍部惹引曳引十九訥嚩二合引捺舍儞引怛囉二合引曳引二十尾枳引蘭拏二合計引舍引曳引二十一阿儞引迦嚕波尾尾馱二十二尾唧怛囉二合吠引沙馱引哩抳引曳引二十三曩謨引窣覩二合帝引二十四婆誐嚩帝引二十五怛囉二合夜引𧹞引囉怛曩二合引喃引二十六薩帝曳二合引曩阿引羯荼野二十七阿引羯荼野二十八嚩攞禰引嚩二十九摩呬引濕嚩二合囉三十誐嚕噥三十一尾瑟穠二合三十二俱摩引囕三十三沒囉二合引憾摩二合𧹞三十四印捺囕二合三十五贊捺囕二合三十六阿引儞怛樣二合三十七阿仡𩕳二合三十八嚩嚕𧹞三十九嚩引踊四十俱吠引囕四十一藥羼四十二囉引乞叉二合僧四十三部旦四十四必囉二合引旦四十五必舍引贊四十六恭畔引𧹞四十七特哩二合底囉引瑟吒囕三合四十八尾嚕荼劍四十九尾嚕播引羼五十商俱羯蘭𧹞二合五十一底哩二合羯囉𧹞五十二薩兔攞羯蘭𧹞二合五十三摩賀引迦朗五十四難禰枳引濕嚩二合囕五十五勃陵二合儗哩引知孕二合五十六曩引野劍五十七尾曩引野劍五十八那引摩劍五十九路引賀劍六十沙瑟恥二合引禰引尾引俱引胝引六十一儗哩迦引六十二訥哩誐二合引迦引怛也二合引野儞引六十三摩賀引迦引怛也二合引野儞引六十四愛舍引儞引六十五乃哩帝引六十六迦隷六十七摩賀引迦引隷六十八跋捺囉二合迦引隷六十九嚕捺囉二合迦引隷七十祖囉迦引哩七十一蘇迦引隷七十二拽舍戍儞七十三阿仡𩕳二合引夜引七十四嚩引野麼也二合引七十五舍引隷迦引嚩哩底二合設訖底二合七十六摩賀引設設底二合七十七設多引偁七十八摩賀引設多引偁七十九印捺囉二合引抳八十沒囉二合憾摩二合抳引八十一憍吠引哩引八十二摩賀引憍吠引哩引八十三摩呬引濕嚩二合哩引八十四吠引瑟拏二合微引八十五蘇婆昂引八十六佐引捫拏引八十七嘮捺哩二合引八十八嚩引囉引呬引八十九曳引佐引儞曳二合九十三摩曳引九十一曩底瑟姹二合底九十二旦引薩哩鑁二合引九十三阿引嚩引賀野九十四三摩野九十五薩他二合引鉢野九十六虎盧虎盧九十七祖盧祖盧九十八左囉左囉九十九度摩度摩一百摩賀引嚩日囉二合巘引馱引哩引一百一尾儞也二合引囉倪鉢野底娑嚩二合引賀引一百二此大明力不可思議。",
        "from": "T20n1170_003:0703b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人欲作諸成就者。",
        "from": "T20n1170_003:0703b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月一日起首作法。",
        "from": "T20n1170_003:0703b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食赤色食。",
        "from": "T20n1170_003:0703b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以香花供養於佛。",
        "from": "T20n1170_003:0703b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大明至初八日。",
        "from": "T20n1170_003:0703b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦大明滿一千八遍。",
        "from": "T20n1170_003:0703b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若志心專注。",
        "from": "T20n1170_003:0703b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所作皆得成就。",
        "from": "T20n1170_003:0703b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有宿曜所執者。",
        "from": "T20n1170_003:0703b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此明加持彼人即解。",
        "from": "T20n1170_003:0703b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲令宿曜來降入寤者。",
        "from": "T20n1170_003:0703b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人如前專注持誦數滿。",
        "from": "T20n1170_003:0703b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復立身如舞勢。",
        "from": "T20n1170_003:0703b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結金剛鉤印。",
        "from": "T20n1170_003:0703b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想吽字變為金剛杵。",
        "from": "T20n1170_003:0703b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熾焰遍滿已。",
        "from": "T20n1170_003:0703b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒安息香誦大明彼宿曜在百千由旬外。",
        "from": "T20n1170_003:0703b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞召即至。",
        "from": "T20n1170_003:0703b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦金剛鎖大明令住。",
        "from": "T20n1170_003:0703b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後使入寤說諸善惡。",
        "from": "T20n1170_003:0703b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說事已即燒沈香。",
        "from": "T20n1170_003:0703c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦氷誐羅大明加持水。",
        "from": "T20n1170_003:0703c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑宿曜身即解縛令去。",
        "from": "T20n1170_003:0703c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次若復有人。",
        "from": "T20n1170_003:0703c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被星曜所執魅者。",
        "from": "T20n1170_003:0703c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人立身如舞勢。",
        "from": "T20n1170_003:0703c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手執金剛杵先安心上。",
        "from": "T20n1170_003:0703c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想自心如日輪。",
        "from": "T20n1170_003:0703c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照耀熾盛作忿怒相復移金剛杵安腰側。",
        "from": "T20n1170_003:0703c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即口誦捫左捫唧。",
        "from": "T20n1170_003:0703c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼星曜所執自解。",
        "from": "T20n1170_003:0703c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說破一切所執魅大明曰。",
        "from": "T20n1170_003:0703c07_11",
        "context_with_next_sentence": true
    },
    {
