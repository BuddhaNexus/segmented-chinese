{
    "T32n1671_004:0724c13_0": "福蓋正行所集經卷第四",
    "T32n1671_004:0724c15_0": "龍樹菩薩集",
    "T32n1671_004:0724c16_0": "西天譯經三藏朝散大夫試鴻臚卿",
    "T32n1671_004:0724c17_0": "宣梵大師賜紫沙門臣日稱等",
    "T32n1671_004:0724c18_0": "奉　詔譯",
    "T32n1671_004:0724c19_0": "以何義故。",
    "T32n1671_004:0724c19_1": "名祇陀林(華言戰勝林順古不譯也)。",
    "T32n1671_004:0724c19_2": "昔勝軍王。",
    "T32n1671_004:0724c19_3": "與其隣國。",
    "T32n1671_004:0724c20_4": "鬪戰獲勝。",
    "T32n1671_004:0724c20_5": "當於是時。",
    "T32n1671_004:0724c20_6": "誕生太子。",
    "T32n1671_004:0724c20_7": "乃以戰勝。",
    "T32n1671_004:0724c21_8": "而立名焉。",
    "T32n1671_004:0724c21_9": "林屬彼故。",
    "T32n1671_004:0724c21_10": "稱祇陀林。",
    "T32n1671_004:0724c21_11": "富貴自在。",
    "T32n1671_004:0724c22_12": "無量莊嚴。",
    "T32n1671_004:0724c22_13": "一切人民。",
    "T32n1671_004:0724c22_14": "咸悉喜見。",
    "T32n1671_004:0724c22_15": "於此林中。",
    "T32n1671_004:0724c23_16": "廣以人財。",
    "T32n1671_004:0724c23_17": "營治守護。",
    "T32n1671_004:0724c23_18": "為嬉遊處其林稠密。",
    "T32n1671_004:0724c24_0": "枝葉欝茂。",
    "T32n1671_004:0724c24_1": "清陰彌布。",
    "T32n1671_004:0724c24_2": "蔽諸炎光。",
    "T32n1671_004:0724c24_3": "夏多清涼。",
    "T32n1671_004:0724c24_4": "冬無嚴風。",
    "T32n1671_004:0724c25_5": "雨無泥淖。",
    "T32n1671_004:0724c25_6": "奇蘤芬馥。",
    "T32n1671_004:0724c25_7": "周遍開敷。",
    "T32n1671_004:0724c25_8": "樛枝偃亞。",
    "T32n1671_004:0724c26_9": "其狀如蓋。",
    "T32n1671_004:0724c26_10": "多諸警衛。",
    "T32n1671_004:0724c26_11": "無聞盜寇。",
    "T32n1671_004:0724c26_12": "其地清勝。",
    "T32n1671_004:0724c27_13": "侔歡喜園。",
    "T32n1671_004:0724c28_0": "以何義故。",
    "T32n1671_004:0724c28_1": "名給孤獨。",
    "T32n1671_004:0724c28_2": "於無親者。",
    "T32n1671_004:0724c28_3": "施與飲食。",
    "T32n1671_004:0724c28_4": "而周給故。",
    "T32n1671_004:0724c29_5": "如毘奈耶藏中。",
    "T32n1671_004:0724c29_6": "廣明其事。",
    "T32n1671_004:0724c29_7": "由彼長者宿善根力。",
    "T32n1671_004:0725a01_8": "欲請世尊。",
    "T32n1671_004:0725a01_9": "供養恭敬。",
    "T32n1671_004:0725a01_10": "先與如來。",
    "T32n1671_004:0725a01_11": "造立精舍。",
    "T32n1671_004:0725a02_12": "即以百千俱胝黃金。",
    "T32n1671_004:0725a02_13": "為其價直。",
    "T32n1671_004:0725a02_14": "於太子所。",
    "T32n1671_004:0725a03_15": "貿易其地。",
    "T32n1671_004:0725a03_16": "既遂其志。",
    "T32n1671_004:0725a03_17": "召集諸方一切奇巧。",
    "T32n1671_004:0725a04_18": "造作最上宮殿樓閣。",
    "T32n1671_004:0725a04_19": "門軒戶牖。",
    "T32n1671_004:0725a04_20": "流泉浴池種種莊嚴。",
    "T32n1671_004:0725a05_21": "皆悉具備。",
    "T32n1671_004:0725a05_22": "崇峻垣牆。",
    "T32n1671_004:0725a05_23": "周匝圍繞。",
    "T32n1671_004:0725a05_24": "於是長者詣王舍城。",
    "T32n1671_004:0725a06_25": "頂禮佛足。",
    "T32n1671_004:0725a06_26": "而作是言。",
    "T32n1671_004:0725a06_27": "我今請佛。",
    "T32n1671_004:0725a07_28": "詣舍衛城。",
    "T32n1671_004:0725a07_29": "唯願如來。",
    "T32n1671_004:0725a07_30": "大慈允諾。",
    "T32n1671_004:0725a07_31": "彼有伽藍。",
    "T32n1671_004:0725a08_32": "廣大清淨。",
    "T32n1671_004:0725a08_33": "及諸弟子。",
    "T32n1671_004:0725a08_34": "同往安居。",
    "T32n1671_004:0725a08_35": "是時長者。",
    "T32n1671_004:0725a09_36": "白已而還。",
    "T32n1671_004:0725a09_37": "時王舍城。",
    "T32n1671_004:0725a09_38": "有一長者。",
    "T32n1671_004:0725a09_39": "其名善寂。",
    "T32n1671_004:0725a10_40": "白世尊言。",
    "T32n1671_004:0725a10_41": "不須往彼。",
    "T32n1671_004:0725a10_42": "我當與佛。",
    "T32n1671_004:0725a10_43": "造立精舍。",
    "T32n1671_004:0725a11_44": "佛即止之。",
    "T32n1671_004:0725a11_45": "時佛至彼舍衛城已。",
    "T32n1671_004:0725a11_46": "長者乃以所造伽藍。",
    "T32n1671_004:0725a12_47": "奉施如來。",
    "T32n1671_004:0725a12_48": "哀愍彼故。",
    "T32n1671_004:0725a12_49": "佛即受之。",
    "T32n1671_004:0725a13_0": "復為稱讚彼地方所。",
    "T32n1671_004:0725a13_1": "最上吉祥。",
    "T32n1671_004:0725a13_2": "第一安隱。",
    "T32n1671_004:0725a13_3": "過去諸佛。",
    "T32n1671_004:0725a14_4": "亦於此地。",
    "T32n1671_004:0725a14_5": "利益安樂一切眾生。",
    "T32n1671_004:0725a14_6": "汝於先佛。",
    "T32n1671_004:0725a15_7": "久植德本。",
    "T32n1671_004:0725a15_8": "由昔願力。",
    "T32n1671_004:0725a15_9": "今復如是。",
    "T32n1671_004:0725a15_10": "時有外道。",
    "T32n1671_004:0725a16_11": "名摩多唧致那。",
    "T32n1671_004:0725a16_12": "居止草菴。",
    "T32n1671_004:0725a16_13": "脩習苦行。",
    "T32n1671_004:0725a16_14": "於諸世間一切眾生言論智慧。",
    "T32n1671_004:0725a17_15": "皆悉通達。",
    "T32n1671_004:0725a17_16": "謂祇陀林。",
    "T32n1671_004:0725a18_17": "最上殊妙。",
    "T32n1671_004:0725a18_18": "極諸奢麗。",
    "T32n1671_004:0725a18_19": "云何世尊。",
    "T32n1671_004:0725a18_20": "及諸比丘。",
    "T32n1671_004:0725a19_21": "而得受用。",
    "T32n1671_004:0725a19_22": "佛知是已。",
    "T32n1671_004:0725a19_23": "以大方便。",
    "T32n1671_004:0725a19_24": "憐愍彼類。",
    "T32n1671_004:0725a20_25": "而語之曰。",
    "T32n1671_004:0725a20_26": "我諸弟子。",
    "T32n1671_004:0725a20_27": "得盡苦際。",
    "T32n1671_004:0725a20_28": "善達出世經律論藏。",
    "T32n1671_004:0725a21_29": "斷煩惱故。",
    "T32n1671_004:0725a21_30": "於是世尊為彼外道。",
    "T32n1671_004:0725a22_0": "說伽陀曰。",
    "T32n1671_004:0725a23_0": "　汝雖如大龍　　尚為貪所染",
    "T32n1671_004:0725a24_0": "　於讚毀二種　　則為彼所動",
    "T32n1671_004:0725a25_0": "　身若有眾瘡　　飛蠅則隨逐",
    "T32n1671_004:0725a26_0": "　循環三有中　　如蟲居糞壤",
    "T32n1671_004:0725a27_0": "時彼外道聞佛說已。",
    "T32n1671_004:0725a27_1": "心生悟解。",
    "T32n1671_004:0725a27_2": "以偈讚佛。",
    "T32n1671_004:0725a28_0": "　如來出世間　　慧日破諸暗",
    "T32n1671_004:0725a29_0": "　況我微劣智　　何由得悟解",
    "T32n1671_004:0725b01_0": "　設於多劫中　　復以百千舌",
    "T32n1671_004:0725b02_0": "　稱讚佛功德　　少分不能盡",
    "T32n1671_004:0725b03_0": "　佛為天中僊　　知眾生諸行",
    "T32n1671_004:0725b04_0": "　於四威儀中　　唯利樂含識",
    "T32n1671_004:0725b05_0": "時舍衛城。",
    "T32n1671_004:0725b05_1": "多諸外道。",
    "T32n1671_004:0725b05_2": "及婆羅門。",
    "T32n1671_004:0725b05_3": "聰叡智者。",
    "T32n1671_004:0725b05_4": "聞佛至此。",
    "T32n1671_004:0725b06_5": "競來詰難。",
    "T32n1671_004:0725b06_6": "如來方便。",
    "T32n1671_004:0725b06_7": "隨宜為說。",
    "T32n1671_004:0725b06_8": "如師子吼怖諸群獸。",
    "T32n1671_004:0725b07_9": "悉令了悟。",
    "T32n1671_004:0725b07_10": "離諸癡暗。",
    "T32n1671_004:0725b07_11": "時有智者。",
    "T32n1671_004:0725b08_12": "名羅護羅。",
    "T32n1671_004:0725b08_13": "聞讚佛德。",
    "T32n1671_004:0725b08_14": "而說偈言。",
    "T32n1671_004:0725b09_0": "　大悲無上尊　　專修利他行",
    "T32n1671_004:0725b10_0": "　不求世名聞　　及增長財利",
    "T32n1671_004:0725b11_0": "　初降生王宮　　於四方瞻視",
    "T32n1671_004:0725b12_0": "　現微笑思惟　　皆為度群有",
    "T32n1671_004:0725b13_0": "是時復有妙臂童子。",
    "T32n1671_004:0725b13_1": "亦說伽陀。",
    "T32n1671_004:0725b13_2": "而讚於佛。",
    "T32n1671_004:0725b14_0": "　牟尼尊大僊　　善說諸法要",
    "T32n1671_004:0725b15_0": "　離過無希望　　聞者皆蒙益",
    "T32n1671_004:0725b16_0": "　諸天及世人　　咸供養恭敬",
    "T32n1671_004:0725b17_0": "　歸命十力尊　　唯願見攝受",
    "T32n1671_004:0725b18_0": "此祇陀林。",
    "T32n1671_004:0725b18_1": "給孤獨園。",
    "T32n1671_004:0725b18_2": "由五種因咸生愛樂。",
    "T32n1671_004:0725b18_3": "一者廣博居城中央。",
    "T32n1671_004:0725b19_4": "二者比丘乞食不遠。",
    "T32n1671_004:0725b19_5": "三者幽寂離諸喧閙。",
    "T32n1671_004:0725b20_6": "四者清潔無諸蚊虻。",
    "T32n1671_004:0725b20_7": "五者善人多遊其中。",
    "T32n1671_004:0725b21_8": "是故世尊。",
    "T32n1671_004:0725b21_9": "多樂居此。",
    "T32n1671_004:0725b21_10": "住如實智。",
    "T32n1671_004:0725b22_0": "離無慚行。",
    "T32n1671_004:0725b22_1": "一切功德。",
    "T32n1671_004:0725b22_2": "依止顯現。",
    "T32n1671_004:0725b22_3": "具足十力。",
    "T32n1671_004:0725b22_4": "福智莊嚴。",
    "T32n1671_004:0725b23_5": "為彼世間第一導師。",
    "T32n1671_004:0725b23_6": "故能成熟眾生善根。",
    "T32n1671_004:0725b24_7": "猶如蓮華出於淤泥。",
    "T32n1671_004:0725b24_8": "自利利他。",
    "T32n1671_004:0725b24_9": "悉圓滿故。",
    "T32n1671_004:0725b26_0": "時勝軍王。",
    "T32n1671_004:0725b26_1": "并諸人民。",
    "T32n1671_004:0725b26_2": "及諸外道。",
    "T32n1671_004:0725b26_3": "婆羅門等。",
    "T32n1671_004:0725b26_4": "皆悉往詣祇園精舍。",
    "T32n1671_004:0725b27_5": "合掌志心。",
    "T32n1671_004:0725b27_6": "頂禮佛足。",
    "T32n1671_004:0725b27_7": "時佛世尊。",
    "T32n1671_004:0725b28_8": "憐愍攝受諸有情故。",
    "T32n1671_004:0725b28_9": "破諸異見。",
    "T32n1671_004:0725b28_10": "令生信解。",
    "T32n1671_004:0725b29_11": "由不善因。",
    "T32n1671_004:0725b29_12": "馳流五趣。",
    "T32n1671_004:0725b29_13": "當依正法而求出離。",
    "T32n1671_004:0725c01_14": "為彼宣說六念之法。",
    "T32n1671_004:0725c01_15": "善男子。",
    "T32n1671_004:0725c01_16": "於我法中。",
    "T32n1671_004:0725c02_0": "信受教誨。",
    "T32n1671_004:0725c02_1": "具諸正見。",
    "T32n1671_004:0725c02_2": "是名念佛。",
    "T32n1671_004:0725c02_3": "若樂廣大聽聞正法。",
    "T32n1671_004:0725c03_4": "如理思惟。",
    "T32n1671_004:0725c03_5": "是名念法於諸比丘。",
    "T32n1671_004:0725c03_6": "常生尊重善知識想。",
    "T32n1671_004:0725c04_7": "是名念僧。",
    "T32n1671_004:0725c04_8": "於諸善法。",
    "T32n1671_004:0725c04_9": "愛樂攝受。",
    "T32n1671_004:0725c05_10": "具足威儀。",
    "T32n1671_004:0725c05_11": "是名念戒。",
    "T32n1671_004:0725c05_12": "常以飲食。",
    "T32n1671_004:0725c05_13": "施佛及僧。",
    "T32n1671_004:0725c06_14": "住如是因。",
    "T32n1671_004:0725c06_15": "是名念施。",
    "T32n1671_004:0725c06_16": "常樂禮敬諸大菩薩。",
    "T32n1671_004:0725c07_17": "隨順佛勅。",
    "T32n1671_004:0725c07_18": "名念賢聖。",
    "T32n1671_004:0725c08_0": "若諸眾生。",
    "T32n1671_004:0725c08_1": "依佛所說。",
    "T32n1671_004:0725c08_2": "住正思惟則除疑惑。",
    "T32n1671_004:0725c08_3": "依止正念。",
    "T32n1671_004:0725c09_4": "則無散亂。",
    "T32n1671_004:0725c09_5": "是為六念。",
    "T32n1671_004:0725c09_6": "生長諸善。",
    "T32n1671_004:0725c09_7": "以何義故。",
    "T32n1671_004:0725c10_8": "名為比丘。",
    "T32n1671_004:0725c10_9": "謂能永斷諸煩惱故。",
    "T32n1671_004:0725c10_10": "所有世間生苦。",
    "T32n1671_004:0725c11_11": "老苦。",
    "T32n1671_004:0725c11_12": "病苦。",
    "T32n1671_004:0725c11_13": "死苦。",
    "T32n1671_004:0725c11_14": "憂悲苦惱。",
    "T32n1671_004:0725c11_15": "五取蘊苦。",
    "T32n1671_004:0725c12_16": "求不得苦。",
    "T32n1671_004:0725c12_17": "愛別離苦。",
    "T32n1671_004:0725c12_18": "怨憎會苦。",
    "T32n1671_004:0725c12_19": "如是諸苦。",
    "T32n1671_004:0725c13_20": "皆已盡故。",
    "T32n1671_004:0725c13_21": "此明世間五取蘊苦。",
    "T32n1671_004:0725c13_22": "作如是說。",
    "T32n1671_004:0725c15_0": "何義名生。",
    "T32n1671_004:0725c15_1": "如世尊說。",
    "T32n1671_004:0725c15_2": "彼彼有情。",
    "T32n1671_004:0725c15_3": "造種種行。",
    "T32n1671_004:0725c15_4": "招感命根。",
    "T32n1671_004:0725c16_5": "蘊處界等。",
    "T32n1671_004:0725c16_6": "展轉相續。",
    "T32n1671_004:0725c16_7": "五根發生。",
    "T32n1671_004:0725c16_8": "五根生故。",
    "T32n1671_004:0725c17_9": "眾同分生。",
    "T32n1671_004:0725c17_10": "由是增長。",
    "T32n1671_004:0725c17_11": "形色圓滿。",
    "T32n1671_004:0725c17_12": "是名為生。",
    "T32n1671_004:0725c19_0": "何義名老。",
    "T32n1671_004:0725c19_1": "如世尊說。",
    "T32n1671_004:0725c19_2": "行蘊遷壞。",
    "T32n1671_004:0725c19_3": "諸根衰朽。",
    "T32n1671_004:0725c19_4": "身形傴曲。",
    "T32n1671_004:0725c20_5": "肌肉枯槁。",
    "T32n1671_004:0725c20_6": "皮膚緩皺。",
    "T32n1671_004:0725c20_7": "多生黶點。",
    "T32n1671_004:0725c20_8": "舉止沈重。",
    "T32n1671_004:0725c21_9": "行須倚仗。",
    "T32n1671_004:0725c21_10": "疲乏無堪。",
    "T32n1671_004:0725c21_11": "假人守護。",
    "T32n1671_004:0725c21_12": "如是老相。",
    "T32n1671_004:0725c22_13": "此有二種。",
    "T32n1671_004:0725c22_14": "一者須人承事。",
    "T32n1671_004:0725c22_15": "二者無所依怙。",
    "T32n1671_004:0725c23_16": "是名為老。",
    "T32n1671_004:0725c24_0": "何義名病。",
    "T32n1671_004:0725c24_1": "如世尊說。",
    "T32n1671_004:0725c24_2": "四大增損。",
    "T32n1671_004:0725c24_3": "界不平等。",
    "T32n1671_004:0725c24_4": "猶如毒蛇。",
    "T32n1671_004:0725c25_5": "生諸苦惱。",
    "T32n1671_004:0725c25_6": "此有二種。",
    "T32n1671_004:0725c25_7": "一者內所發起。",
    "T32n1671_004:0725c26_0": "二者外緣損害。",
    "T32n1671_004:0725c26_1": "復有三種。",
    "T32n1671_004:0725c26_2": "一者業報所招。",
    "T32n1671_004:0725c26_3": "二者橫難侵損。",
    "T32n1671_004:0725c27_4": "三者為他呪詛。",
    "T32n1671_004:0725c27_5": "委細分別。",
    "T32n1671_004:0725c27_6": "有無數種。",
    "T32n1671_004:0725c28_7": "謂風癀痰癊。",
    "T32n1671_004:0725c28_8": "疥癩癰疽。",
    "T32n1671_004:0725c28_9": "嗽瀉熱毒。",
    "T32n1671_004:0725c29_0": "羸瘠疼痛等。",
    "T32n1671_004:0725c29_1": "是名為病。",
    "T32n1671_004:0726a01_0": "何義名死。",
    "T32n1671_004:0726a01_1": "如世尊說。",
    "T32n1671_004:0726a01_2": "謂彼有情。",
    "T32n1671_004:0726a01_3": "捨眾同分。",
    "T32n1671_004:0726a01_4": "諸蘊散亂。",
    "T32n1671_004:0726a02_5": "煖觸漸微。",
    "T32n1671_004:0726a02_6": "命根斷滅。",
    "T32n1671_004:0726a02_7": "此有二類。",
    "T32n1671_004:0726a02_8": "一者自盡。",
    "T32n1671_004:0726a03_9": "二者往詣。",
    "T32n1671_004:0726a03_10": "初復有三。",
    "T32n1671_004:0726a03_11": "謂命根雖盡。",
    "T32n1671_004:0726a03_12": "其福未盡。",
    "T32n1671_004:0726a04_13": "或福雖盡。",
    "T32n1671_004:0726a04_14": "其命未盡。",
    "T32n1671_004:0726a04_15": "或命與福。",
    "T32n1671_004:0726a04_16": "俱時而盡。",
    "T32n1671_004:0726a05_17": "二者往詣亦有三種。",
    "T32n1671_004:0726a05_18": "一者自往(捕猛獸等)。",
    "T32n1671_004:0726a05_19": "二者他詣(被劫掠等)。",
    "T32n1671_004:0726a06_20": "三者自他相遇(如鬪戰等)。",
    "T32n1671_004:0726a06_21": "復有三類。",
    "T32n1671_004:0726a06_22": "一者放逸。",
    "T32n1671_004:0726a07_23": "二者毀戒。",
    "T32n1671_004:0726a07_24": "三者報盡。",
    "T32n1671_004:0726a07_25": "由放逸故。",
    "T32n1671_004:0726a07_26": "斷其慧命。",
    "T32n1671_004:0726a08_27": "由毀戒故。",
    "T32n1671_004:0726a08_28": "破諸威儀。",
    "T32n1671_004:0726a08_29": "由報盡故。",
    "T32n1671_004:0726a08_30": "內外眷屬。",
    "T32n1671_004:0726a09_31": "圍繞悲戀。",
    "T32n1671_004:0726a09_32": "不能捨去。",
    "T32n1671_004:0726a09_33": "是名為死。",
    "T32n1671_004:0726a09_34": "云何名憂。",
    "T32n1671_004:0726a10_35": "內心愁慼。",
    "T32n1671_004:0726a10_36": "如火逼切。",
    "T32n1671_004:0726a10_37": "亦如炎日。",
    "T32n1671_004:0726a10_38": "炙水如湯。",
    "T32n1671_004:0726a11_39": "是名為憂。",
    "T32n1671_004:0726a11_40": "云何名悲。",
    "T32n1671_004:0726a11_41": "涕泣流淚。",
    "T32n1671_004:0726a11_42": "哽咽難言。",
    "T32n1671_004:0726a12_0": "如其孝子追念慈父。",
    "T32n1671_004:0726a12_1": "及餘親屬。",
    "T32n1671_004:0726a12_2": "一切皆然。",
    "T32n1671_004:0726a12_3": "意不寂靜。",
    "T32n1671_004:0726a13_4": "是名為悲。",
    "T32n1671_004:0726a13_5": "云何為苦。",
    "T32n1671_004:0726a13_6": "磣辣荼毒。",
    "T32n1671_004:0726a13_7": "與樂相違。",
    "T32n1671_004:0726a14_8": "同五識身。",
    "T32n1671_004:0726a14_9": "相應領納。",
    "T32n1671_004:0726a14_10": "是名為苦。",
    "T32n1671_004:0726a14_11": "云何為惱。",
    "T32n1671_004:0726a15_12": "譬如枯木。",
    "T32n1671_004:0726a15_13": "中以火燒。",
    "T32n1671_004:0726a15_14": "令彼有情。",
    "T32n1671_004:0726a15_15": "煩惋懆擾。",
    "T32n1671_004:0726a16_16": "與意識身。",
    "T32n1671_004:0726a16_17": "相應領納。",
    "T32n1671_004:0726a16_18": "是名為惱。",
    "T32n1671_004:0726a16_19": "云何名為求不得苦。",
    "T32n1671_004:0726a17_20": "謂於所求諸相應事。",
    "T32n1671_004:0726a17_21": "未得如意。",
    "T32n1671_004:0726a18_0": "心生疲極。",
    "T32n1671_004:0726a18_1": "如陶家輪。",
    "T32n1671_004:0726a18_2": "此心隨轉。",
    "T32n1671_004:0726a18_3": "云何名為愛別離苦。",
    "T32n1671_004:0726a19_4": "於所樂境。",
    "T32n1671_004:0726a19_5": "相應眷屬。",
    "T32n1671_004:0726a19_6": "所有色相。",
    "T32n1671_004:0726a19_7": "剎那變異。",
    "T32n1671_004:0726a20_8": "云何名為冤憎會苦。",
    "T32n1671_004:0726a20_9": "謂於一切非相應人。",
    "T32n1671_004:0726a21_10": "互生嫌惡。",
    "T32n1671_004:0726a21_11": "而返值遇。",
    "T32n1671_004:0726a21_12": "此中所說生等次第。",
    "T32n1671_004:0726a22_0": "展轉推求。",
    "T32n1671_004:0726a22_1": "皆為熱惱。",
    "T32n1671_004:0726a22_2": "如曠野鹿。",
    "T32n1671_004:0726a22_3": "被火圍繞。",
    "T32n1671_004:0726a22_4": "不能自出。",
    "T32n1671_004:0726a23_5": "必為所焚。",
    "T32n1671_004:0726a23_6": "唯除如來初降生時。",
    "T32n1671_004:0726a23_7": "增長善法。",
    "T32n1671_004:0726a24_8": "寂靜安隱。",
    "T32n1671_004:0726a24_9": "體性自然。",
    "T32n1671_004:0726a24_10": "離諸熱惱。",
    "T32n1671_004:0726a24_11": "如契經偈云。",
    "T32n1671_004:0726a26_0": "　諸佛出世樂　　演說正法樂",
    "T32n1671_004:0726a27_0": "　眾僧和合樂　　令修諸善行",
    "T32n1671_004:0726a28_0": "　若佛不興世　　三界何有樂",
    "T32n1671_004:0726a29_0": "　由佛出現故　　我等獲安樂",
    "T32n1671_004:0726b01_0": "由諸有情。",
    "T32n1671_004:0726b01_1": "不善種子。",
    "T32n1671_004:0726b01_2": "以為其因。",
    "T32n1671_004:0726b01_3": "而能生長苦樹境界。",
    "T32n1671_004:0726b02_4": "常為三毒苦火所燒。",
    "T32n1671_004:0726b02_5": "於彼世間富樂等事。",
    "T32n1671_004:0726b03_6": "但聞他說。",
    "T32n1671_004:0726b03_7": "何由識知。",
    "T32n1671_004:0726b03_8": "馳涉曠野。",
    "T32n1671_004:0726b03_9": "險難惡道。",
    "T32n1671_004:0726b04_10": "砂礫荊棘。",
    "T32n1671_004:0726b04_11": "受諸艱辛。",
    "T32n1671_004:0726b04_12": "以乞自濟。",
    "T32n1671_004:0726b04_13": "無所歸趣。",
    "T32n1671_004:0726b05_14": "如是有情。",
    "T32n1671_004:0726b05_15": "宿乏善本。",
    "T32n1671_004:0726b05_16": "沈溺惡道。",
    "T32n1671_004:0726b05_17": "輪轉無窮。",
    "T32n1671_004:0726b06_18": "如俳優者。",
    "T32n1671_004:0726b06_19": "易其形色。",
    "T32n1671_004:0726b06_20": "設得為人。",
    "T32n1671_004:0726b06_21": "生貧窮家。",
    "T32n1671_004:0726b07_22": "於母胎中。",
    "T32n1671_004:0726b07_23": "受種種苦。",
    "T32n1671_004:0726b08_0": "云何有情處胎藏中。",
    "T32n1671_004:0726b08_1": "受諸苦惱。",
    "T32n1671_004:0726b08_2": "如世尊說。",
    "T32n1671_004:0726b08_3": "初結生時。",
    "T32n1671_004:0726b09_4": "攬其父母赤白二物不淨為緣。",
    "T32n1671_004:0726b09_5": "漸次增長。",
    "T32n1671_004:0726b10_6": "成其形質。",
    "T32n1671_004:0726b10_7": "居生藏下熟藏之上。",
    "T32n1671_004:0726b10_8": "處其中間。",
    "T32n1671_004:0726b11_9": "極惡臭穢。",
    "T32n1671_004:0726b11_10": "母或飽食。",
    "T32n1671_004:0726b11_11": "或時飢渴。",
    "T32n1671_004:0726b11_12": "身肢動轉。",
    "T32n1671_004:0726b12_13": "及染欲事。",
    "T32n1671_004:0726b12_14": "皆受其苦。",
    "T32n1671_004:0726b12_15": "又將產時。",
    "T32n1671_004:0726b12_16": "於母胎中。",
    "T32n1671_004:0726b13_17": "不樂居止。",
    "T32n1671_004:0726b13_18": "起不淨想。",
    "T32n1671_004:0726b13_19": "迴趣生門。",
    "T32n1671_004:0726b13_20": "二手乍觸胎子身分。",
    "T32n1671_004:0726b14_21": "受大苦楚。",
    "T32n1671_004:0726b14_22": "極重熱惱。",
    "T32n1671_004:0726b14_23": "彼初生子。",
    "T32n1671_004:0726b15_24": "由飢渴故。",
    "T32n1671_004:0726b15_25": "發聲啼哭。",
    "T32n1671_004:0726b15_26": "向母求乳。",
    "T32n1671_004:0726b15_27": "又其乳者。",
    "T32n1671_004:0726b16_28": "轉血所成。",
    "T32n1671_004:0726b16_29": "或食不充。",
    "T32n1671_004:0726b16_30": "受其熱惱。",
    "T32n1671_004:0726b16_31": "漸為孾兒。",
    "T32n1671_004:0726b17_0": "臥於便利。",
    "T32n1671_004:0726b17_1": "或時戲劇。",
    "T32n1671_004:0726b17_2": "墜於溝坑。",
    "T32n1671_004:0726b17_3": "此名生已所受熱惱。",
    "T32n1671_004:0726b18_4": "餘世間人。",
    "T32n1671_004:0726b18_5": "亦皆如此。",
    "T32n1671_004:0726b18_6": "又彼有情。",
    "T32n1671_004:0726b18_7": "年漸長大。",
    "T32n1671_004:0726b19_8": "色力充滿。",
    "T32n1671_004:0726b19_9": "憍恣放逸。",
    "T32n1671_004:0726b19_10": "念念追求五欲塵境。",
    "T32n1671_004:0726b20_11": "由染慧故。",
    "T32n1671_004:0726b20_12": "耽著不捨自任其情速至于斃。",
    "T32n1671_004:0726b22_0": "云何衰老所有諸苦。",
    "T32n1671_004:0726b22_1": "形色羸瘦面頰凹戾牙齒疎缺髮毛稀白頸臂胸脇悉皆骨現火力漸微飲食薄少。",
    "T32n1671_004:0726b24_2": "猶如飛禽。",
    "T32n1671_004:0726b24_3": "置於籠內。",
    "T32n1671_004:0726b24_4": "日漸消瘦。",
    "T32n1671_004:0726b25_0": "唯一毛聚。",
    "T32n1671_004:0726b25_1": "朝有所作。",
    "T32n1671_004:0726b25_2": "暮即廢忘。",
    "T32n1671_004:0726b25_3": "初欲施為。",
    "T32n1671_004:0726b25_4": "後則懈退。",
    "T32n1671_004:0726b26_5": "言如小兒。",
    "T32n1671_004:0726b26_6": "無有期度。",
    "T32n1671_004:0726b26_7": "或時終日。",
    "T32n1671_004:0726b26_8": "口不欲語。",
    "T32n1671_004:0726b27_9": "於晝夜中。",
    "T32n1671_004:0726b27_10": "唯務睡眠。",
    "T32n1671_004:0726b27_11": "縱眠不寐。",
    "T32n1671_004:0726b27_12": "喘嗽無時。",
    "T32n1671_004:0726b28_13": "欲說所苦。",
    "T32n1671_004:0726b28_14": "言不明了。",
    "T32n1671_004:0726b28_15": "如遠行人。",
    "T32n1671_004:0726b28_16": "不樂久住。",
    "T32n1671_004:0726b29_17": "諸有所作。",
    "T32n1671_004:0726b29_18": "難可如意。",
    "T32n1671_004:0726b29_19": "小不稱心。",
    "T32n1671_004:0726b29_20": "則生悲惱。",
    "T32n1671_004:0726c01_21": "親友慰諭。",
    "T32n1671_004:0726c01_22": "宜自安懷。",
    "T32n1671_004:0726c01_23": "目視境界。",
    "T32n1671_004:0726c01_24": "不能受用。",
    "T32n1671_004:0726c02_25": "諸快樂事。",
    "T32n1671_004:0726c02_26": "但耳聞說。",
    "T32n1671_004:0726c02_27": "意欲遊行。",
    "T32n1671_004:0726c02_28": "足不能動。",
    "T32n1671_004:0726c03_29": "唯假几杖。",
    "T32n1671_004:0726c03_30": "以為其伴。",
    "T32n1671_004:0726c03_31": "為諸女人之所輕笑。",
    "T32n1671_004:0726c04_32": "因念昔日諸根康愈。",
    "T32n1671_004:0726c04_33": "受諸欲樂。",
    "T32n1671_004:0726c04_34": "剎那變壞。",
    "T32n1671_004:0726c05_35": "深自悔惱。",
    "T32n1671_004:0726c05_36": "久活何為。",
    "T32n1671_004:0726c05_37": "是名衰老熱惱行相。",
    "T32n1671_004:0726c07_0": "云何病苦所有熱惱。",
    "T32n1671_004:0726c07_1": "謂諸愚夫盛年壯色。",
    "T32n1671_004:0726c07_2": "放逸著欲。",
    "T32n1671_004:0726c08_3": "漸成怯弱。",
    "T32n1671_004:0726c08_4": "縈纏痼疾。",
    "T32n1671_004:0726c08_5": "眾苦現前。",
    "T32n1671_004:0726c08_6": "善人覩之。",
    "T32n1671_004:0726c09_7": "深生憐愍。",
    "T32n1671_004:0726c09_8": "善言誨誘。",
    "T32n1671_004:0726c09_9": "使其發露。",
    "T32n1671_004:0726c09_10": "聞已憂怖。",
    "T32n1671_004:0726c10_11": "恐墮惡道。",
    "T32n1671_004:0726c10_12": "形貌端正。",
    "T32n1671_004:0726c10_13": "病所侵奪。",
    "T32n1671_004:0726c10_14": "上妙飲食。",
    "T32n1671_004:0726c11_15": "不能飡噉。",
    "T32n1671_004:0726c11_16": "雖處豪富。",
    "T32n1671_004:0726c11_17": "如貧窶者。",
    "T32n1671_004:0726c11_18": "世有智人。",
    "T32n1671_004:0726c12_0": "常自省察。",
    "T32n1671_004:0726c12_1": "當知病苦。",
    "T32n1671_004:0726c12_2": "不可愛樂。",
    "T32n1671_004:0726c12_3": "如雹損苗。",
    "T32n1671_004:0726c12_4": "頓傷榮盛。",
    "T32n1671_004:0726c13_5": "如陸地龜。",
    "T32n1671_004:0726c13_6": "常思其水。",
    "T32n1671_004:0726c13_7": "如白晝月。",
    "T32n1671_004:0726c13_8": "無彼光輝。",
    "T32n1671_004:0726c14_9": "如渴乏人。",
    "T32n1671_004:0726c14_10": "墮其枯井。",
    "T32n1671_004:0726c14_11": "如油盡燈。",
    "T32n1671_004:0726c14_12": "不得久住。",
    "T32n1671_004:0726c15_13": "如腐牆壁。",
    "T32n1671_004:0726c15_14": "無有堅牢。",
    "T32n1671_004:0726c15_15": "如癡騃童。",
    "T32n1671_004:0726c15_16": "人所輕侮。",
    "T32n1671_004:0726c16_17": "如彼狂象。",
    "T32n1671_004:0726c16_18": "壞蓮花池。",
    "T32n1671_004:0726c16_19": "是名病苦所有熱惱。",
    "T32n1671_004:0726c17_0": "如何愚夫。",
    "T32n1671_004:0726c17_1": "數數貪著。",
    "T32n1671_004:0726c17_2": "減損壽命。",
    "T32n1671_004:0726c17_3": "焚燬善根。",
    "T32n1671_004:0726c17_4": "無明所覆。",
    "T32n1671_004:0726c18_5": "邪命邪求。",
    "T32n1671_004:0726c18_6": "貪彼世間飲食衣服。",
    "T32n1671_004:0726c18_7": "身漏心漏。",
    "T32n1671_004:0726c19_8": "破壞正智。",
    "T32n1671_004:0726c19_9": "不樂依止寂靜山林。",
    "T32n1671_004:0726c19_10": "受持讀誦大乘經典。",
    "T32n1671_004:0726c20_11": "不能堅固護持淨戒。",
    "T32n1671_004:0726c20_12": "何由能趣菩提彼岸。",
    "T32n1671_004:0726c21_13": "若心寂靜。",
    "T32n1671_004:0726c21_14": "棄背欲境。",
    "T32n1671_004:0726c21_15": "或先所作。",
    "T32n1671_004:0726c21_16": "諸放逸行。",
    "T32n1671_004:0726c22_17": "皆悉厭患。",
    "T32n1671_004:0726c22_18": "不復思惟。",
    "T32n1671_004:0726c22_19": "猶如深冤。",
    "T32n1671_004:0726c22_20": "心不樂見。",
    "T32n1671_004:0726c23_21": "如甘蔗滓。",
    "T32n1671_004:0726c23_22": "不可再味。",
    "T32n1671_004:0726c23_23": "如焚枯枿。",
    "T32n1671_004:0726c23_24": "令盡無餘。",
    "T32n1671_004:0726c24_25": "如是覺了。",
    "T32n1671_004:0726c24_26": "是人不為琰摩羅王之所逼切。",
    "T32n1671_004:0726c25_0": "又諸女人。",
    "T32n1671_004:0726c25_1": "多諸貪很。",
    "T32n1671_004:0726c25_2": "心懷怨嫉。",
    "T32n1671_004:0726c25_3": "樂為主宰。",
    "T32n1671_004:0726c25_4": "猶如漏瓶。",
    "T32n1671_004:0726c26_5": "貯其不淨。",
    "T32n1671_004:0726c26_6": "如牝馬藏。",
    "T32n1671_004:0726c26_7": "深可厭惡。",
    "T32n1671_004:0726c26_8": "如以毒藥。",
    "T32n1671_004:0726c27_9": "和其美膳。",
    "T32n1671_004:0726c27_10": "如冤執劍不應俯近。",
    "T32n1671_004:0726c27_11": "如彼火聚觸生熱惱。",
    "T32n1671_004:0726c28_12": "若樂欲境。",
    "T32n1671_004:0726c28_13": "心則錯亂破諸梵行。",
    "T32n1671_004:0726c29_0": "如無戒者。",
    "T32n1671_004:0726c29_1": "斷其樂因。",
    "T32n1671_004:0726c29_2": "喪失慧命。",
    "T32n1671_004:0726c29_3": "死軍現前。",
    "T32n1671_004:0726c29_4": "獨一而往。",
    "T32n1671_004:0727a01_5": "趣彼險難。",
    "T32n1671_004:0727a01_6": "無能救者。",
    "T32n1671_004:0727a01_7": "皆由染欲。",
    "T32n1671_004:0727a01_8": "生諸妄念。",
    "T32n1671_004:0727a02_9": "無慚無愧。",
    "T32n1671_004:0727a02_10": "捨知足行。",
    "T32n1671_004:0727a02_11": "為世間人種種譏謗。",
    "T32n1671_004:0727a04_0": "云何名死。",
    "T32n1671_004:0727a04_1": "如有頌云。",
    "T32n1671_004:0727a05_0": "　慧為最勝眼　　癡為極重暗",
    "T32n1671_004:0727a06_0": "　病必由其冤　　死稱第一怖",
    "T32n1671_004:0727a07_0": "　當意樂正法　　以慧善修作",
    "T32n1671_004:0727a08_0": "　是故命終時　　決定離險難",
    "T32n1671_004:0727a09_0": "是名為死所有熱惱。",
    "T32n1671_004:0727a10_0": "福蓋正行所集經卷第四"
}