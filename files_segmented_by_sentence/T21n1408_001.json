[
    {
        "source_sentence": "佛說最上意陀羅尼經",
        "from": "T21n1408_001:0922c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T21n1408_001:0922c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1408_001:0922c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1408_001:0922c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在救鴿城牛頭栴檀精舍。",
        "from": "T21n1408_001:0922c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾俱。",
        "from": "T21n1408_001:0922c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及天龍八部恭敬圍繞瞻仰而住。",
        "from": "T21n1408_001:0922c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告阿難陀及諸大眾言。",
        "from": "T21n1408_001:0922c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀此南閻浮提末世之時。",
        "from": "T21n1408_001:0922c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生由薄福故。",
        "from": "T21n1408_001:0922c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有諸惡鬼神起諸災難。",
        "from": "T21n1408_001:0922c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惱亂眾生使不安隱。",
        "from": "T21n1408_001:0922c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有陀羅尼能為息滅及增吉祥。",
        "from": "T21n1408_001:0922c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今宣說汝等諦聽。",
        "from": "T21n1408_001:0922c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿難陀及諸大眾。",
        "from": "T21n1408_001:0922c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉佛教勅默然而聽。",
        "from": "T21n1408_001:0922c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言阿難。",
        "from": "T21n1408_001:0922c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去世時此閻浮提有一比丘。",
        "from": "T21n1408_001:0922c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰傳教。",
        "from": "T21n1408_001:0922c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於九月黑月十五日。",
        "from": "T21n1408_001:0922c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方遊行去支那國不遠及四由旬忽於路次見一神人遠遠而住。",
        "from": "T21n1408_001:0922c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此神人身長三十肘面圓四肘。",
        "from": "T21n1408_001:0922c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼傳教比丘見此神人。",
        "from": "T21n1408_001:0922c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身量恢偉顏貌熙怡。",
        "from": "T21n1408_001:0922c27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審諦觀察此非他人。",
        "from": "T21n1408_001:0922c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃真實是妙吉祥童子。",
        "from": "T21n1408_001:0922c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是傳教比丘詣神人前五輪著地伸其禮敬。",
        "from": "T21n1408_001:0922c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作禮起已合掌瞻仰白神人言。",
        "from": "T21n1408_001:0923a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何妙吉祥童子現如是相耶。",
        "from": "T21n1408_001:0923a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今審知定非他聖。",
        "from": "T21n1408_001:0923a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼神人告比丘言。",
        "from": "T21n1408_001:0923a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠如汝言我妙吉祥也。",
        "from": "T21n1408_001:0923a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時傳教比丘復白神人言。",
        "from": "T21n1408_001:0923a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故今日現此相耶。",
        "from": "T21n1408_001:0923a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼神人告傳教比丘言。",
        "from": "T21n1408_001:0923a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝知已否。",
        "from": "T21n1408_001:0923a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今南閻浮提當有災難。",
        "from": "T21n1408_001:0923a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薄福眾生得種種病受諸苦惱。",
        "from": "T21n1408_001:0923a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘白言。",
        "from": "T21n1408_001:0923a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今南閻浮提何故忽爾有此災難。",
        "from": "T21n1408_001:0923a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神人言。",
        "from": "T21n1408_001:0923a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今妙高山南面有阿修羅。",
        "from": "T21n1408_001:0923a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興起惡心將諸眷屬索天交戰。",
        "from": "T21n1408_001:0923a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿修羅。",
        "from": "T21n1408_001:0923a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮障日月及以星辰光明不現。",
        "from": "T21n1408_001:0923a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有無量極惡夜叉乾闥婆迦樓羅等。",
        "from": "T21n1408_001:0923a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住妙高山南面。",
        "from": "T21n1408_001:0923a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見阿修羅現是相已亦相黨助。",
        "from": "T21n1408_001:0923a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時天退敗修羅得勝。",
        "from": "T21n1408_001:0923a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時南閻浮提。",
        "from": "T21n1408_001:0923a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽見如是日月星辰光明隱蔽。",
        "from": "T21n1408_001:0923a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸不吉相處處出現。",
        "from": "T21n1408_001:0923a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風雨非時旱澇兢作。",
        "from": "T21n1408_001:0923a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五穀苗稼秀而不實。",
        "from": "T21n1408_001:0923a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有子實食乃無味。",
        "from": "T21n1408_001:0923a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令眾生色力威光一切減劣。",
        "from": "T21n1408_001:0923a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有地居毘舍闍等諸惡鬼類。",
        "from": "T21n1408_001:0923a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變易本形現其異相。",
        "from": "T21n1408_001:0923a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作師子虎狼或作㺃犬之狀。",
        "from": "T21n1408_001:0923a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復現彼女人之相惱亂眾生。",
        "from": "T21n1408_001:0923a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得種種之病使其苦惱。",
        "from": "T21n1408_001:0923a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂癭病風病痰吐之病。",
        "from": "T21n1408_001:0923a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼目病頭痛病腹痛病乃至痔瘻病。",
        "from": "T21n1408_001:0923a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復瘧病或頻日或隔日或須臾或連月。",
        "from": "T21n1408_001:0923a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或患瘡癬或患疥癩諸惡疾病遍閻浮提。",
        "from": "T21n1408_001:0923a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生受極苦惱。",
        "from": "T21n1408_001:0923a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薄福人輩無有免者。",
        "from": "T21n1408_001:0923a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於耆年中年或少或幼。",
        "from": "T21n1408_001:0923a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因是疫沴多從夭歿。",
        "from": "T21n1408_001:0923a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘我以此事而懷傷愍。",
        "from": "T21n1408_001:0923a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故現斯狀告語人知。",
        "from": "T21n1408_001:0923a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘我今告汝若有眾生欲為自身及其眷屬。",
        "from": "T21n1408_001:0923a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至聚落迨於國界。",
        "from": "T21n1408_001:0923a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禳殄災沴增益福祥。",
        "from": "T21n1408_001:0923a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於三寶深生信重。",
        "from": "T21n1408_001:0923a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然備名華珍果燒香塗香。",
        "from": "T21n1408_001:0923a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種供具而為供養。",
        "from": "T21n1408_001:0923a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須志心於一七日不食。",
        "from": "T21n1408_001:0923a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日四時夜四時。",
        "from": "T21n1408_001:0923b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛專注持誦最上意陀羅尼而彼災難必獲殄滅。",
        "from": "T21n1408_001:0923b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切福祥而能增益。",
        "from": "T21n1408_001:0923b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若欲持誦彼最上意陀羅尼者先須。",
        "from": "T21n1408_001:0923b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首稱念南無廣大甚深智慧振吼王如來名已。",
        "from": "T21n1408_001:0923b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦陀羅尼。",
        "from": "T21n1408_001:0923b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼神人為傳教比丘。",
        "from": "T21n1408_001:0923b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說最上意陀羅尼曰。",
        "from": "T21n1408_001:0923b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合他尾布羅誐里𡁠帝尾布羅濕嚩哩尾布羅喻儞世阿羅誐帝莎賀曩謨薩哩嚩二合儞嚩囉抳尾瑟劍比拏怛他誐多寫怛儞也二合他引呬引摩呬引摩賀摩呬莎賀曩謨虞拏引迦囉寫怛他誐多寫怛儞也二合他誐誐曩迦哩誐誐曩三婆吠誐誐曩吉哩帝二合帝引莎賀曩謨囉怛曩二合娜誐二合多引曩謨怛他誐多寫怛儞也二合他引囉怛努二合引訥誐二合帝引囉怛曩二合三婆吠莎賀曩謨摩賀引阿𡁠多薩嚩二合彌儞怛他誐多寫怛儞也二合他阿麼摩呬引莎賀曩謨麼引曩薩旦二合婆寫怛他誐多引寫怛儞也引他引麼引曩娑怛鑁三合󰡊馱鉢納摩二合莎哩鉢納摩三婆吠迦哩呬多迦哩曳莎賀曩謨薩哩嚩二合沒馱󰂛地薩埵喃曩謨阿哩野曼祖室哩二合野怛儞也二合他引惹曳引惹野羅沒地二合引呬引摩呬引摩賀摩呬引莎賀曩謨阿哩野二合嚩路枳帝引濕嚩二合囉寫怛儞也二合他誐誐曩引茶曳二合誐誐曩尾訖闌二合多𪾼呬彌引莎賀曩謨阿哩野二合三滿多婆捺囉二合寫怛他誐多寫怛儞也二合他引呬引婆捺哩二合引摩賀引婆捺哩二合引阿蜜哩二合多婆捺哩二合引尾誐多囉惹細引莎賀曩謨阿哩野二合嚩日囉二合地波多曳多野引怛儞也二合他引吉哩帝二合多薩哩嚩二合𡁠儞引鼻入阿底吉哩帝二合多薩哩嚩二合𡁠儞引鼻嚩日囉二合三婆吠引嚩日囉二合鼻引那迦引野莎賀曩謨薩哩嚩二合沒馱󰂛地薩埵喃怛儞也二合他引濕吠二合引多迦哩引鼻引入嚩二合羅儞曳引莎賀薩旦二合婆儞謨引賀引儞半惹儞奔拏哩迦引野莎賀摩賀引難帝難婆儞曳引莎賀努囉尾努里曳引莎賀羅尾訖里二合帝引莎賀扇帝引悉吠引儞嚩播尼曳引莎賀覽謨引捺哩曳引迦引羅播引世引吉哩帝二合多莎賀阿惹拏二合曩尾馱摩儞曳引莎賀馱引覩迦哩曳引莎賀彌伽迦哩曳引莎賀末羅鑁帝曳莎賀󰂛地孕二合誐難帝曳莎賀羯哩摩二合娑引馱儞迦引野莎賀曀迦囉引摩引野莎賀阿瑜誐左哩尼曳引莎賀沒囉二合𢜩謨二合引播引虞茶引同上野莎賀薩哩嚩二合迦哩摩二合嚩囉拏鼻悉史訖多二合野莎賀薩哩嚩二合沒馱引鼻三塞訖里三合多引野莎賀曀迦悉陵二合誐野莎賀阿悉陵二合誐野莎賀部多引野莎賀阿部多野莎賀薩哩嚩二合努具波三摩引野莎賀摩摩薩哩嚩二合引喃引左莎賀爾時神人說此最上意陀羅尼已。",
        "from": "T21n1408_001:0923c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告比丘傳教言。",
        "from": "T21n1408_001:0923c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今以此陀羅尼於南閻浮提十方之內。",
        "from": "T21n1408_001:0923c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國邑聚落處處傳說。",
        "from": "T21n1408_001:0923c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使諸眾生咸得聞知。",
        "from": "T21n1408_001:0923c25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令此陀羅尼廣宣流布。",
        "from": "T21n1408_001:0923c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1408_001:0923c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為與眾生能增長功德故。",
        "from": "T21n1408_001:0923c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與眾生除諸苦惱故。",
        "from": "T21n1408_001:0923c27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於世間除諸災難故。",
        "from": "T21n1408_001:0923c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令諸惡鬼神息滅惡心故。",
        "from": "T21n1408_001:0923c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令所在國邑聚落王及臣民。",
        "from": "T21n1408_001:0923c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆得安隱快樂故。",
        "from": "T21n1408_001:0924a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若有善男子善女人。",
        "from": "T21n1408_001:0924a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲以此陀羅尼恭敬供養受持讀誦。",
        "from": "T21n1408_001:0924a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息除災難增長功德者。",
        "from": "T21n1408_001:0924a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當發至誠心歸依三寶。",
        "from": "T21n1408_001:0924a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一七日中日別備諸香花飲食供養於佛。",
        "from": "T21n1408_001:0924a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又日供七僧。",
        "from": "T21n1408_001:0924a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又至中夜於自家庭。",
        "from": "T21n1408_001:0924a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燃大炬火用為照燎持誦此陀羅尼。",
        "from": "T21n1408_001:0924a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有災難當得解脫。",
        "from": "T21n1408_001:0924a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若善男子善女人能如是作者。",
        "from": "T21n1408_001:0924a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得自身解脫。",
        "from": "T21n1408_001:0924a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若二七日如是備種種香花飲食。",
        "from": "T21n1408_001:0924a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養佛僧一倍於前。",
        "from": "T21n1408_001:0924a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所有父母同得解脫。",
        "from": "T21n1408_001:0924a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若於三七日能如是於佛法僧倍前。",
        "from": "T21n1408_001:0924a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種香花飲食恭敬供養者。",
        "from": "T21n1408_001:0924a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人所有男女并一切眷屬同得解脫。",
        "from": "T21n1408_001:0924a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若四七日如是修持。",
        "from": "T21n1408_001:0924a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倍倍於前精虔不懈者。",
        "from": "T21n1408_001:0924a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人所住聚落一切人民咸得解脫。",
        "from": "T21n1408_001:0924a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘以要言之。",
        "from": "T21n1408_001:0924a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至七七日倍倍增勝於前供養奉佛法僧。",
        "from": "T21n1408_001:0924a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人所獲功德。",
        "from": "T21n1408_001:0924a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上及國王下及人民。",
        "from": "T21n1408_001:0924a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國界之內普得解脫。",
        "from": "T21n1408_001:0924a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘當知我今告汝。",
        "from": "T21n1408_001:0924a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝持此法於此界他方。",
        "from": "T21n1408_001:0924a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速疾傳說使令流布。",
        "from": "T21n1408_001:0924a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1408_001:0924a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為能與眾生消除種種苦惱。",
        "from": "T21n1408_001:0924a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長種種功德故。",
        "from": "T21n1408_001:0924a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若復有人得聞是法知其利益心不恭敬。",
        "from": "T21n1408_001:0924a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復不能廣為人說。",
        "from": "T21n1408_001:0924a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不能自專讀誦。",
        "from": "T21n1408_001:0924a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘當知是人得匿法過同五逆罪。",
        "from": "T21n1408_001:0924a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若有眾生得聞是法。",
        "from": "T21n1408_001:0924a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不違我教躬自依法。",
        "from": "T21n1408_001:0924a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦供養恭敬。",
        "from": "T21n1408_001:0924a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為他人依法修福。",
        "from": "T21n1408_001:0924a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又能流布廣利眾生。",
        "from": "T21n1408_001:0924a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘我即遙知先為此人往妙高山。",
        "from": "T21n1408_001:0924a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至天人阿修羅乾闥婆迦樓羅所。",
        "from": "T21n1408_001:0924a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以利益心降伏勸喻。",
        "from": "T21n1408_001:0924a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為其說法咸令歡喜。",
        "from": "T21n1408_001:0924a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使彼天人阿修羅等。",
        "from": "T21n1408_001:0924a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息彼諍心互相恭敬。",
        "from": "T21n1408_001:0924a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得閻浮提界災難息滅疫沴不生。",
        "from": "T21n1408_001:0924a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡鬼等各各潛隱。",
        "from": "T21n1408_001:0924a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生咸得安樂。",
        "from": "T21n1408_001:0924b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼神人說是事已隱形不現。",
        "from": "T21n1408_001:0924b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教比丘遵奉傳說。",
        "from": "T21n1408_001:0924b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告諸大眾言。",
        "from": "T21n1408_001:0924b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼妙吉祥童子於過去世。",
        "from": "T21n1408_001:0924b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以方便力為諸眾生說如是法。",
        "from": "T21n1408_001:0924b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為汝等今復宣說汝。",
        "from": "T21n1408_001:0924b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等專心受持讀誦。",
        "from": "T21n1408_001:0924b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未來世廣令流布。",
        "from": "T21n1408_001:0924b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消除災難增益吉祥。",
        "from": "T21n1408_001:0924b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿難陀及諸大眾。",
        "from": "T21n1408_001:0924b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛說已咸悉歡喜。",
        "from": "T21n1408_001:0924b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專心受持禮佛而退。",
        "from": "T21n1408_001:0924b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說最上意陀羅尼經",
        "from": "T21n1408_001:0924b09_100",
        "context_with_next_sentence": false
    }
]