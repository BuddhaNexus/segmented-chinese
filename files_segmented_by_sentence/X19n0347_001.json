{
    "X19n0347_001:0549a03_0": "維摩經評註",
    "X19n0347_001:0549a04_0": "　維摩經評注目次",
    "X19n0347_001:0549a06_0": "卷一　十譬贊　佛國品",
    "X19n0347_001:0549a07_0": "卷二　方便品卷三　弟子品",
    "X19n0347_001:0549a08_0": "卷四　菩薩品卷五　問疾品",
    "X19n0347_001:0549a09_0": "卷六　不思議品卷七　觀眾生品",
    "X19n0347_001:0549a10_0": "卷八　佛道品卷九　入不二法門品",
    "X19n0347_001:0549a11_0": "卷十　香積佛品卷十一　菩薩行品",
    "X19n0347_001:0549a12_0": "卷十二　見阿閦佛品卷十三　法供養品卷十四　囑累品謝康樂維摩詰十譬贊飛沫泡合水性本無泡。",
    "X19n0347_001:0549a17_1": "激流遂聚沫。",
    "X19n0347_001:0549a17_2": "即異成狀貌。",
    "X19n0347_001:0549a17_3": "消散歸虗[壑土+丘]。",
    "X19n0347_001:0549a18_0": "君子識根本。",
    "X19n0347_001:0549a18_1": "安事勞與奪。",
    "X19n0347_001:0549a18_2": "愚俗駭變化。",
    "X19n0347_001:0549a18_3": "橫復生欣怛。",
    "X19n0347_001:0549a19_0": "燄",
    "X19n0347_001:0549a20_0": "性內相表狀。",
    "X19n0347_001:0549a20_1": "非炎安知火。",
    "X19n0347_001:0549a20_2": "新新相推移。",
    "X19n0347_001:0549a20_3": "熒熒非向我。",
    "X19n0347_001:0549a21_0": "如何滯著人。",
    "X19n0347_001:0549a21_1": "終歲迷因果。",
    "X19n0347_001:0549a22_0": "芭蕉",
    "X19n0347_001:0549a23_0": "生分本多端。",
    "X19n0347_001:0549a23_1": "芭蕉知不一。",
    "X19n0347_001:0549a23_2": "含蕚不結核。",
    "X19n0347_001:0549a23_3": "敷華何由實。",
    "X19n0347_001:0549a24_0": "至人善取譬。",
    "X19n0347_001:0549a24_1": "無宰誰能律。",
    "X19n0347_001:0549a24_2": "莫昵緣合時。",
    "X19n0347_001:0549a24_3": "當視分散日。",
    "X19n0347_001:0549b01_0": "聚幻",
    "X19n0347_001:0549b02_0": "幻工非同異。",
    "X19n0347_001:0549b02_1": "誰復謂非真。",
    "X19n0347_001:0549b02_2": "一從逝物過。",
    "X19n0347_001:0549b02_3": "既往亦何陳。",
    "X19n0347_001:0549b03_0": "謬者疑久近。",
    "X19n0347_001:0549b03_1": "達者皆自賓。",
    "X19n0347_001:0549b03_2": "勿起離合情。",
    "X19n0347_001:0549b03_3": "會無百代人。",
    "X19n0347_001:0549b04_0": "夢",
    "X19n0347_001:0549b05_0": "覺謂寢無知。",
    "X19n0347_001:0549b05_1": "寐中非無見。",
    "X19n0347_001:0549b05_2": "意狀照眼前。",
    "X19n0347_001:0549b05_3": "好惡迭萬變。",
    "X19n0347_001:0549b06_0": "既悟眇已往。",
    "X19n0347_001:0549b06_1": "惜為浮物戀。",
    "X19n0347_001:0549b06_2": "孰視婆娑畵。",
    "X19n0347_001:0549b06_3": "寧當非赤縣。",
    "X19n0347_001:0549b07_0": "影響合",
    "X19n0347_001:0549b08_0": "影響順形聲。",
    "X19n0347_001:0549b08_1": "資物故生理。",
    "X19n0347_001:0549b08_2": "一旦揮霍去。",
    "X19n0347_001:0549b08_3": "何因相像似。",
    "X19n0347_001:0549b09_0": "群有靡不然。",
    "X19n0347_001:0549b09_1": "眛漠呼自己。",
    "X19n0347_001:0549b09_2": "四色尚無本。",
    "X19n0347_001:0549b09_3": "八微欲安恃。",
    "X19n0347_001:0549b10_0": "浮雲",
    "X19n0347_001:0549b11_0": "泛濫明月陰。",
    "X19n0347_001:0549b11_1": "薈蔚南山雨。",
    "X19n0347_001:0549b11_2": "能為變動用。",
    "X19n0347_001:0549b11_3": "在我竟無取。",
    "X19n0347_001:0549b12_0": "俄已就飛散。",
    "X19n0347_001:0549b12_1": "豈復得攢聚。",
    "X19n0347_001:0549b12_2": "諸法既無我。",
    "X19n0347_001:0549b12_3": "何由有我所。",
    "X19n0347_001:0549b13_0": "電",
    "X19n0347_001:0549b14_0": "倐爍驚電過。",
    "X19n0347_001:0549b14_1": "可見不可逐。",
    "X19n0347_001:0549b14_2": "恒物生滅後。",
    "X19n0347_001:0549b14_3": "誰復覈遲速。",
    "X19n0347_001:0549b15_0": "慎勿空留念。",
    "X19n0347_001:0549b15_1": "橫使神理恧。",
    "X19n0347_001:0549b15_2": "發已道易孚。",
    "X19n0347_001:0549b15_3": "忘情長之福。",
    "X19n0347_001:0549c07_0": "維摩詰所說經卷一",
    "X19n0347_001:0549c08_0": "姚秦三藏法師鳩摩羅什譯",
    "X19n0347_001:0549c09_0": "佛國品",
    "X19n0347_001:0549c10_0": "如是我聞。",
    "X19n0347_001:0549c10_1": "一時佛在毗耶離。",
    "X19n0347_001:0549c10_2": "菴羅樹園。",
    "X19n0347_001:0549c10_3": "與大比丘眾八千人俱。",
    "X19n0347_001:0549c11_4": "菩薩三萬二千。",
    "X19n0347_001:0549c11_5": "眾所知識。",
    "X19n0347_001:0549c11_6": "大智本行。",
    "X19n0347_001:0549c12_7": "皆悉成就。",
    "X19n0347_001:0549c12_8": "諸佛威神之所建立。",
    "X19n0347_001:0549c12_9": "為護法城。",
    "X19n0347_001:0549c13_0": "受持正法。",
    "X19n0347_001:0549c13_1": "能師子吼。",
    "X19n0347_001:0549c13_2": "名聞十方。",
    "X19n0347_001:0549c13_3": "眾人不請。",
    "X19n0347_001:0549c13_4": "友而安之。",
    "X19n0347_001:0549c14_5": "紹隆三寶。",
    "X19n0347_001:0549c14_6": "能使不絕。",
    "X19n0347_001:0549c14_7": "降伏魔怨。",
    "X19n0347_001:0549c14_8": "制諸外道。",
    "X19n0347_001:0549c15_0": "悉已清淨。",
    "X19n0347_001:0549c15_1": "永離蓋纏。",
    "X19n0347_001:0549c15_2": "心常安住無礙解脫。",
    "X19n0347_001:0549c15_3": "念定總持。",
    "X19n0347_001:0549c16_4": "辯才不斷。",
    "X19n0347_001:0549c16_5": "布施持戒忍辱精進禪定智慧及方便力。",
    "X19n0347_001:0549c17_6": "無不具足。",
    "X19n0347_001:0549c17_7": "逮無所得不起法忍。",
    "X19n0347_001:0549c17_8": "已能隨順轉不退輪。",
    "X19n0347_001:0549c18_9": "善解法相。",
    "X19n0347_001:0549c18_10": "知眾生根。",
    "X19n0347_001:0549c18_11": "蓋諸大眾。",
    "X19n0347_001:0550a01_0": "得無所畏。",
    "X19n0347_001:0550a01_1": "功德智慧。",
    "X19n0347_001:0550a01_2": "以修其心。",
    "X19n0347_001:0550a01_3": "相好嚴身。",
    "X19n0347_001:0550a01_4": "色像第一。",
    "X19n0347_001:0550a02_5": "捨諸世間所有飾好。",
    "X19n0347_001:0550a02_6": "名稱高遠。",
    "X19n0347_001:0550a02_7": "踰於須彌。",
    "X19n0347_001:0550a03_0": "深信堅固。",
    "X19n0347_001:0550a03_1": "猶若金剛。",
    "X19n0347_001:0550a03_2": "法寶普照而雨甘露。",
    "X19n0347_001:0550a03_3": "於眾言音。",
    "X19n0347_001:0550a04_4": "微妙第一。",
    "X19n0347_001:0550a04_5": "深入緣起。",
    "X19n0347_001:0550a04_6": "斷諸邪見有無二邊。",
    "X19n0347_001:0550a05_0": "無復餘習。",
    "X19n0347_001:0550a05_1": "演法無畏。",
    "X19n0347_001:0550a05_2": "猶師子吼。",
    "X19n0347_001:0550a05_3": "其所講說。",
    "X19n0347_001:0550a05_4": "乃如雷震。",
    "X19n0347_001:0550a06_5": "無有量已過量。",
    "X19n0347_001:0550a06_6": "集眾法寶。",
    "X19n0347_001:0550a06_7": "如海導師。",
    "X19n0347_001:0550a06_8": "了達諸法深妙之義。",
    "X19n0347_001:0550a07_9": "善知眾生往來所趣及心所行。",
    "X19n0347_001:0550a08_0": "近無等等佛自在慧。",
    "X19n0347_001:0550a08_1": "十力無畏。",
    "X19n0347_001:0550a08_2": "十八不共。",
    "X19n0347_001:0550a08_3": "關閉一切諸惡趣門而生五道以現其身。",
    "X19n0347_001:0550a09_4": "為大醫王。",
    "X19n0347_001:0550a10_0": "善療眾病。",
    "X19n0347_001:0550a10_1": "應病與藥。",
    "X19n0347_001:0550a10_2": "令得服行。",
    "X19n0347_001:0550a10_3": "無量功德皆成就。",
    "X19n0347_001:0550a11_4": "無量佛土皆嚴淨。",
    "X19n0347_001:0550a11_5": "其見聞者。",
    "X19n0347_001:0550a11_6": "無不蒙益。",
    "X19n0347_001:0550a11_7": "諸有所作。",
    "X19n0347_001:0550a12_8": "亦不唐捐。",
    "X19n0347_001:0550a12_9": "如是一切功德。",
    "X19n0347_001:0550a12_10": "皆悉具足。",
    "X19n0347_001:0550a12_11": "其名曰等觀菩薩。",
    "X19n0347_001:0550a13_12": "不等觀菩薩。",
    "X19n0347_001:0550a13_13": "等不等觀菩薩。",
    "X19n0347_001:0550a13_14": "定自在王菩薩。",
    "X19n0347_001:0550a14_15": "法自在王菩薩。",
    "X19n0347_001:0550a14_16": "法相菩薩。",
    "X19n0347_001:0550a14_17": "光相菩薩。",
    "X19n0347_001:0550a15_0": "光嚴菩薩。",
    "X19n0347_001:0550a15_1": "大嚴菩薩。",
    "X19n0347_001:0550a15_2": "寶積菩薩。",
    "X19n0347_001:0550a15_3": "辯積菩薩。",
    "X19n0347_001:0550a15_4": "寶手菩薩。",
    "X19n0347_001:0550a16_5": "寶印手菩薩。",
    "X19n0347_001:0550a16_6": "常舉手菩薩。",
    "X19n0347_001:0550a16_7": "常下手菩薩。",
    "X19n0347_001:0550a16_8": "常慘菩薩。",
    "X19n0347_001:0550a17_9": "喜根菩薩。",
    "X19n0347_001:0550a17_10": "喜王菩薩。",
    "X19n0347_001:0550a17_11": "辯音菩薩。",
    "X19n0347_001:0550a17_12": "虗空藏菩薩。",
    "X19n0347_001:0550a18_13": "執寶炬菩薩。",
    "X19n0347_001:0550a18_14": "寶勇菩薩。",
    "X19n0347_001:0550a18_15": "寶見菩薩。",
    "X19n0347_001:0550a18_16": "帝網菩薩。",
    "X19n0347_001:0550a19_17": "明網菩薩。",
    "X19n0347_001:0550a19_18": "無緣觀菩薩。",
    "X19n0347_001:0550a19_19": "慧積菩薩。",
    "X19n0347_001:0550a19_20": "寶勝菩薩。",
    "X19n0347_001:0550a20_0": "天王菩薩。",
    "X19n0347_001:0550a20_1": "壞魔菩薩。",
    "X19n0347_001:0550a20_2": "電德菩薩。",
    "X19n0347_001:0550a20_3": "自在王菩薩。",
    "X19n0347_001:0550a20_4": "功德相嚴菩薩。",
    "X19n0347_001:0550a21_5": "師子吼菩薩。",
    "X19n0347_001:0550a21_6": "雷音菩薩。",
    "X19n0347_001:0550a21_7": "山相擊音菩薩。",
    "X19n0347_001:0550a22_8": "香象菩薩。",
    "X19n0347_001:0550a22_9": "白香象菩薩。",
    "X19n0347_001:0550a22_10": "常精進菩薩。",
    "X19n0347_001:0550a22_11": "不休息菩薩。",
    "X19n0347_001:0550a23_12": "妙生菩薩。",
    "X19n0347_001:0550a23_13": "華嚴菩薩。",
    "X19n0347_001:0550a23_14": "觀世音菩薩。",
    "X19n0347_001:0550a23_15": "得大勢菩薩。",
    "X19n0347_001:0550a24_16": "梵網菩薩。",
    "X19n0347_001:0550a24_17": "寶杖菩薩。",
    "X19n0347_001:0550a24_18": "無勝菩薩。",
    "X19n0347_001:0550a24_19": "嚴土菩薩。",
    "X19n0347_001:0550b01_20": "金髻菩薩。",
    "X19n0347_001:0550b01_21": "珠髻菩薩。",
    "X19n0347_001:0550b01_22": "彌勒菩薩。",
    "X19n0347_001:0550b01_23": "文殊師利法王子菩薩。",
    "X19n0347_001:0550b02_24": "如是等三萬二千人。",
    "X19n0347_001:0550b02_25": "復有萬梵天王尸棄等。",
    "X19n0347_001:0550b03_26": "從餘四天下。",
    "X19n0347_001:0550b03_27": "來詣佛所而為聽法。",
    "X19n0347_001:0550b03_28": "復有萬二千天帝。",
    "X19n0347_001:0550b04_29": "亦從餘四天下。",
    "X19n0347_001:0550b04_30": "來在會坐。",
    "X19n0347_001:0550b04_31": "并餘大威力諸天。",
    "X19n0347_001:0550b05_32": "龍神夜叉。",
    "X19n0347_001:0550b05_33": "乾闥婆。",
    "X19n0347_001:0550b05_34": "阿修羅。",
    "X19n0347_001:0550b05_35": "迦樓羅。",
    "X19n0347_001:0550b05_36": "緊那羅。",
    "X19n0347_001:0550b06_37": "摩睺羅伽等。",
    "X19n0347_001:0550b06_38": "悉來會坐。",
    "X19n0347_001:0550b06_39": "諸比丘。",
    "X19n0347_001:0550b06_40": "比丘尼。",
    "X19n0347_001:0550b06_41": "優婆塞。",
    "X19n0347_001:0550b07_42": "優婆夷。",
    "X19n0347_001:0550b07_43": "俱來會坐。",
    "X19n0347_001:0550b07_44": "彼時佛與無量百千之眾。",
    "X19n0347_001:0550b08_45": "恭敬圍繞。",
    "X19n0347_001:0550b08_46": "而為說法。",
    "X19n0347_001:0550b08_47": "譬如須彌山王。",
    "X19n0347_001:0550b08_48": "顯于大海。",
    "X19n0347_001:0550b09_49": "安處眾寶師子之座。",
    "X19n0347_001:0550b09_50": "蔽於一切諸來大眾。",
    "X19n0347_001:0550b10_0": "爾時毗耶離城。",
    "X19n0347_001:0550b10_1": "有長者子。",
    "X19n0347_001:0550b10_2": "名曰寶積。",
    "X19n0347_001:0550b10_3": "與五百長者子。",
    "X19n0347_001:0550b11_4": "俱持七寶蓋。",
    "X19n0347_001:0550b11_5": "來詣佛所。",
    "X19n0347_001:0550b11_6": "頭面禮足。",
    "X19n0347_001:0550b11_7": "各以其蓋。",
    "X19n0347_001:0550b12_8": "共供養佛。",
    "X19n0347_001:0550b12_9": "佛之威神。",
    "X19n0347_001:0550b12_10": "令諸寶蓋合成一蓋。",
    "X19n0347_001:0550b12_11": "遍覆三千大千世界。",
    "X19n0347_001:0550b13_12": "而此世界廣長之相。",
    "X19n0347_001:0550b13_13": "悉於中現。",
    "X19n0347_001:0550b14_14": "又此三千大千世界。",
    "X19n0347_001:0550b14_15": "諸須彌山。",
    "X19n0347_001:0550b14_16": "雪山。",
    "X19n0347_001:0550b14_17": "目真隣陀山。",
    "X19n0347_001:0550b15_18": "摩訶目真隣陀山。",
    "X19n0347_001:0550b15_19": "香山。",
    "X19n0347_001:0550b15_20": "寶山。",
    "X19n0347_001:0550b15_21": "金山。",
    "X19n0347_001:0550b15_22": "黑山。",
    "X19n0347_001:0550b15_23": "鐵圍山。",
    "X19n0347_001:0550b16_24": "大鐵圍山。",
    "X19n0347_001:0550b16_25": "大海江河。",
    "X19n0347_001:0550b16_26": "川流泉源。",
    "X19n0347_001:0550b16_27": "及日月星辰。",
    "X19n0347_001:0550b17_28": "天宮龍宮。",
    "X19n0347_001:0550b17_29": "諸尊神宮。",
    "X19n0347_001:0550b17_30": "悉現於寶蓋中。",
    "X19n0347_001:0550b17_31": "又十方諸佛。",
    "X19n0347_001:0550b18_32": "諸佛說法。",
    "X19n0347_001:0550b18_33": "亦現於寶蓋中。",
    "X19n0347_001:0550b18_34": "爾時一切大眾。",
    "X19n0347_001:0550b19_0": "覩佛神力。",
    "X19n0347_001:0550b19_1": "歎未曾有。",
    "X19n0347_001:0550b19_2": "合掌禮佛。",
    "X19n0347_001:0550b19_3": "瞻仰尊顏。",
    "X19n0347_001:0550b19_4": "目不暫捨。",
    "X19n0347_001:0550b20_5": "長者子寶積。",
    "X19n0347_001:0550b20_6": "即於佛前。",
    "X19n0347_001:0550b20_7": "以偈頌曰。",
    "X19n0347_001:0550b21_0": "　目淨修廣如青蓮　　心淨已度諸禪定　久積淨業稱無量　　導眾以寂故稽首　既見大聖以神變　　普現十方無量土　其中諸佛演說法　　於是一切悉見聞　法王法力超羣生　　常以法財施一切　能善分別諸法相　　於第一義而不動　已於諸法得自在　　是故稽首此法王　說法不有亦不無　　以因緣故諸法生　無我無造無受者　　善惡之業亦不亡　始在佛樹力降魔　　得甘露滅覺道成　已無心意無受行　　而悉摧伏諸外道　三轉法輪於大千　　其輪本來常清淨　天人得道此為證　　三寶於是現世間　以斯妙法濟羣生　　一受不退常寂然　度老病死大醫王　　當禮法海德無邊　毀譽不動如須彌　　於善不善等以慈　心行平等如虗空　　孰聞人寶不敬承　今奉世尊此微蓋　　於中現我三千界　諸天龍神所居宮　　乾闥婆等及夜叉　悉見世間諸所有　　十力哀現是化變　眾覩希有皆歎佛　　今我稽首三界尊　大聖法王眾所歸　　淨心觀佛靡不欣　各見世尊在其前　　斯則神力不共法　佛以一音演說法　　眾生隨類各得解　皆謂世尊同其語　　斯則神力不共法　佛以一音演說法　　眾生各各隨所解　普得受行獲其利　　斯則神力不共法　佛以一音演說法　　或有恐畏或歡喜　或生厭離或斷疑　　斯則神力不共法　稽首十力大精進　　稽首已得無所畏　稽首住於不共法　　稽首一切大導師　稽首能斷眾結縛　　稽首已到於彼岸　稽首能度諸世間　　稽首永離生死道　悉知眾生來去相　　善於諸法得解脫　不著世間如蓮華　　常善入於空寂行　達諸法相無罣礙　　稽首如空無所依爾時長者子寶積。",
    "X19n0347_001:0551a21_1": "說此偈已。",
    "X19n0347_001:0551a21_2": "白佛言。",
    "X19n0347_001:0551a21_3": "世尊。",
    "X19n0347_001:0551a21_4": "是五百長者子。",
    "X19n0347_001:0551a22_5": "皆已發阿耨多羅三藐三菩提心。",
    "X19n0347_001:0551a22_6": "願聞得佛國土清淨。",
    "X19n0347_001:0551a23_7": "唯願世尊。",
    "X19n0347_001:0551a23_8": "說諸菩薩淨土之行。",
    "X19n0347_001:0551a24_9": "佛言善哉寶積乃能為諸菩薩。",
    "X19n0347_001:0551a24_10": "問於如來淨土之行。",
    "X19n0347_001:0551b01_11": "諦聽諦聽。",
    "X19n0347_001:0551b01_12": "善思念之。",
    "X19n0347_001:0551b01_13": "當為汝說。",
    "X19n0347_001:0551b01_14": "於是寶積與五百長者子。",
    "X19n0347_001:0551b02_15": "受教而聽。",
    "X19n0347_001:0551b02_16": "佛言寶積。",
    "X19n0347_001:0551b02_17": "眾生之類。",
    "X19n0347_001:0551b03_18": "是菩薩佛土。",
    "X19n0347_001:0551b03_19": "所以者何。",
    "X19n0347_001:0551b03_20": "菩薩隨所化眾生而取佛土。",
    "X19n0347_001:0551b04_21": "隨所調伏眾生而取佛土。",
    "X19n0347_001:0551b04_22": "隨諸眾生。",
    "X19n0347_001:0551b04_23": "應以何國。",
    "X19n0347_001:0551b05_24": "入佛智慧。",
    "X19n0347_001:0551b05_25": "而取佛土。",
    "X19n0347_001:0551b05_26": "隨諸眾生。",
    "X19n0347_001:0551b05_27": "應以何國。",
    "X19n0347_001:0551b06_28": "起菩薩根。",
    "X19n0347_001:0551b06_29": "而取佛土。",
    "X19n0347_001:0551b06_30": "所以者何。",
    "X19n0347_001:0551b06_31": "菩薩取於淨國。",
    "X19n0347_001:0551b07_32": "皆為饒益諸眾生故。",
    "X19n0347_001:0551b07_33": "譬如有人。",
    "X19n0347_001:0551b07_34": "欲於空地。",
    "X19n0347_001:0551b07_35": "造立宮室。",
    "X19n0347_001:0551b08_36": "隨意無礙。",
    "X19n0347_001:0551b08_37": "若於虗空。",
    "X19n0347_001:0551b08_38": "終不能成。",
    "X19n0347_001:0551b08_39": "菩薩如是。",
    "X19n0347_001:0551b09_40": "為成就眾生故。",
    "X19n0347_001:0551b09_41": "願取佛國。",
    "X19n0347_001:0551b09_42": "願取佛國者。",
    "X19n0347_001:0551b09_43": "非於空也。",
    "X19n0347_001:0551b10_44": "寶積。",
    "X19n0347_001:0551b10_45": "當知直心是菩薩淨土。",
    "X19n0347_001:0551b10_46": "菩薩成佛時。",
    "X19n0347_001:0551b11_0": "不諂眾生。",
    "X19n0347_001:0551b11_1": "來生其國。",
    "X19n0347_001:0551b11_2": "深心是菩薩淨土。",
    "X19n0347_001:0551b11_3": "菩薩成佛時。",
    "X19n0347_001:0551b12_4": "具足功德眾生。",
    "X19n0347_001:0551b12_5": "來生其國。",
    "X19n0347_001:0551b12_6": "菩提心。",
    "X19n0347_001:0551b12_7": "是菩薩淨土。",
    "X19n0347_001:0551b13_8": "菩薩成佛時。",
    "X19n0347_001:0551b13_9": "大乘眾生。",
    "X19n0347_001:0551b13_10": "來生其國。",
    "X19n0347_001:0551b13_11": "布施是菩薩淨土。",
    "X19n0347_001:0551b14_12": "菩薩成佛時。",
    "X19n0347_001:0551b14_13": "一切能捨眾生。",
    "X19n0347_001:0551b14_14": "來生其國。",
    "X19n0347_001:0551b15_15": "持戒是菩薩淨土。",
    "X19n0347_001:0551b15_16": "菩薩成佛時。",
    "X19n0347_001:0551b15_17": "行十善道滿願眾生。",
    "X19n0347_001:0551b16_18": "來生其國。",
    "X19n0347_001:0551b16_19": "忍辱是菩薩淨土。",
    "X19n0347_001:0551b16_20": "菩薩成佛時。",
    "X19n0347_001:0551b17_21": "三十二相莊嚴眾生。",
    "X19n0347_001:0551b17_22": "來生其國。",
    "X19n0347_001:0551b17_23": "精進是菩薩淨土。",
    "X19n0347_001:0551b18_24": "菩薩成佛時。",
    "X19n0347_001:0551b18_25": "勤修一切功德眾生。",
    "X19n0347_001:0551b18_26": "來生其國。",
    "X19n0347_001:0551b19_27": "禪定是菩薩淨土。",
    "X19n0347_001:0551b19_28": "菩薩成佛時。",
    "X19n0347_001:0551b19_29": "攝心不亂眾生。",
    "X19n0347_001:0551b20_30": "來生其國。",
    "X19n0347_001:0551b20_31": "智慧是菩薩淨土。",
    "X19n0347_001:0551b20_32": "菩薩成佛時。",
    "X19n0347_001:0551b20_33": "正定眾生。",
    "X19n0347_001:0551b21_34": "來生其國。",
    "X19n0347_001:0551b21_35": "四無量心。",
    "X19n0347_001:0551b21_36": "是菩薩淨土。",
    "X19n0347_001:0551b21_37": "菩薩成佛時。",
    "X19n0347_001:0551b22_38": "成就慈悲喜捨眾生。",
    "X19n0347_001:0551b22_39": "來生其國。",
    "X19n0347_001:0551b22_40": "四攝法是菩薩淨土。",
    "X19n0347_001:0551b23_41": "菩薩成佛時。",
    "X19n0347_001:0551b23_42": "解脫所攝眾生。",
    "X19n0347_001:0551b23_43": "來生其國。",
    "X19n0347_001:0551b24_44": "方便是菩薩淨土。",
    "X19n0347_001:0551b24_45": "菩薩成佛時。",
    "X19n0347_001:0551b24_46": "於一切法方便無閡眾生。",
    "X19n0347_001:0551c01_47": "來生其國。",
    "X19n0347_001:0551c01_48": "三十七道品。",
    "X19n0347_001:0551c01_49": "是菩薩淨土。",
    "X19n0347_001:0551c02_50": "菩薩成佛時。",
    "X19n0347_001:0551c02_51": "念處正勤神足根力覺道眾生。",
    "X19n0347_001:0551c03_52": "來生其國。",
    "X19n0347_001:0551c03_53": "迴向心。",
    "X19n0347_001:0551c03_54": "是菩薩淨土。",
    "X19n0347_001:0551c03_55": "菩薩成佛時。",
    "X19n0347_001:0551c04_0": "得一切具足功德國土。",
    "X19n0347_001:0551c04_1": "說除八難。",
    "X19n0347_001:0551c04_2": "是菩薩淨土。",
    "X19n0347_001:0551c05_0": "菩薩成佛時。",
    "X19n0347_001:0551c05_1": "國土無有三惡八難。",
    "X19n0347_001:0551c05_2": "自守戒行。",
    "X19n0347_001:0551c05_3": "不譏彼闕是菩薩淨土。",
    "X19n0347_001:0551c06_4": "菩薩成佛時。",
    "X19n0347_001:0551c06_5": "國土無有犯禁之名。",
    "X19n0347_001:0551c07_6": "十善。",
    "X19n0347_001:0551c07_7": "是菩薩淨土。",
    "X19n0347_001:0551c07_8": "菩薩成佛時。",
    "X19n0347_001:0551c07_9": "命不中夭。",
    "X19n0347_001:0551c08_10": "大富梵行。",
    "X19n0347_001:0551c08_11": "所言誠諦。",
    "X19n0347_001:0551c08_12": "常以輭語。",
    "X19n0347_001:0551c08_13": "眷屬不離。",
    "X19n0347_001:0551c08_14": "善和諍訟。",
    "X19n0347_001:0551c09_15": "言必饒益。",
    "X19n0347_001:0551c09_16": "不嫉不恚。",
    "X19n0347_001:0551c09_17": "正見眾生。",
    "X19n0347_001:0551c09_18": "來生其國。",
    "X19n0347_001:0551c10_19": "如是寶積。",
    "X19n0347_001:0551c10_20": "菩薩隨其直心。",
    "X19n0347_001:0551c10_21": "則能發行。",
    "X19n0347_001:0551c10_22": "隨其發行。",
    "X19n0347_001:0551c11_23": "則得深心。",
    "X19n0347_001:0551c11_24": "隨其深心。",
    "X19n0347_001:0551c11_25": "則意調伏。",
    "X19n0347_001:0551c11_26": "隨其調伏。",
    "X19n0347_001:0551c11_27": "則如說行。",
    "X19n0347_001:0551c12_28": "隨如說行。",
    "X19n0347_001:0551c12_29": "則能迴向。",
    "X19n0347_001:0551c12_30": "隨其迴向。",
    "X19n0347_001:0551c12_31": "則有方便。",
    "X19n0347_001:0552a01_32": "隨其方便。",
    "X19n0347_001:0552a01_33": "則成就眾生。",
    "X19n0347_001:0552a01_34": "隨成就眾生。",
    "X19n0347_001:0552a01_35": "則佛土淨。",
    "X19n0347_001:0552a02_36": "隨佛土淨。",
    "X19n0347_001:0552a02_37": "則說法淨。",
    "X19n0347_001:0552a02_38": "隨說法淨。",
    "X19n0347_001:0552a02_39": "則智慧淨。",
    "X19n0347_001:0552a02_40": "隨智慧淨。",
    "X19n0347_001:0552a03_41": "則其心淨。",
    "X19n0347_001:0552a03_42": "隨其心淨。",
    "X19n0347_001:0552a03_43": "則一切功德淨。",
    "X19n0347_001:0552a03_44": "是故寶積若菩薩欲得淨土。",
    "X19n0347_001:0552a04_45": "當淨其心。",
    "X19n0347_001:0552a04_46": "隨其心淨。",
    "X19n0347_001:0552a05_0": "則佛土淨。",
    "X19n0347_001:0552a06_0": "爾時舍利弗。",
    "X19n0347_001:0552a06_1": "承佛威神。",
    "X19n0347_001:0552a06_2": "作是念。",
    "X19n0347_001:0552a06_3": "若菩薩心淨。",
    "X19n0347_001:0552a06_4": "則佛土淨者。",
    "X19n0347_001:0552a07_5": "我世尊。",
    "X19n0347_001:0552a07_6": "本為菩薩時。",
    "X19n0347_001:0552a07_7": "意豈不淨。",
    "X19n0347_001:0552a07_8": "而是佛土不淨若此。",
    "X19n0347_001:0552a08_9": "佛知其念。",
    "X19n0347_001:0552a08_10": "即告之言。",
    "X19n0347_001:0552a08_11": "於意云何。",
    "X19n0347_001:0552a09_0": "日月豈不淨耶。",
    "X19n0347_001:0552a09_1": "而盲者不見。",
    "X19n0347_001:0552a09_2": "對曰不也。",
    "X19n0347_001:0552a09_3": "世尊是盲者過。",
    "X19n0347_001:0552a10_4": "非日月咎。",
    "X19n0347_001:0552a10_5": "舍利弗。",
    "X19n0347_001:0552a10_6": "眾生罪故。",
    "X19n0347_001:0552a10_7": "不見如來國土嚴淨。",
    "X19n0347_001:0552a11_8": "非如來咎。",
    "X19n0347_001:0552a11_9": "舍利弗。",
    "X19n0347_001:0552a11_10": "我此土淨。",
    "X19n0347_001:0552a11_11": "而汝不見。",
    "X19n0347_001:0552a12_12": "爾時螺髻梵王。",
    "X19n0347_001:0552a12_13": "語舍利弗。",
    "X19n0347_001:0552a12_14": "勿作是念。",
    "X19n0347_001:0552a12_15": "謂此佛土。",
    "X19n0347_001:0552a13_16": "以為不淨。",
    "X19n0347_001:0552a13_17": "所以者何。",
    "X19n0347_001:0552a13_18": "我見釋迦牟尼佛土清淨。",
    "X19n0347_001:0552a14_19": "譬如自在天宮。",
    "X19n0347_001:0552a14_20": "舍利弗言。",
    "X19n0347_001:0552a14_21": "我見此土。",
    "X19n0347_001:0552a14_22": "丘陵坑坎。",
    "X19n0347_001:0552a15_23": "荊棘沙礫。",
    "X19n0347_001:0552a15_24": "土石諸山。",
    "X19n0347_001:0552a15_25": "穢惡充滿。",
    "X19n0347_001:0552a15_26": "螺髻梵王言。",
    "X19n0347_001:0552a16_0": "仁者心有高下。",
    "X19n0347_001:0552a16_1": "不依佛慧。",
    "X19n0347_001:0552a16_2": "故見此土。",
    "X19n0347_001:0552a16_3": "為不淨耳。",
    "X19n0347_001:0552a17_0": "舍利弗。",
    "X19n0347_001:0552a17_1": "菩薩於一切眾生。",
    "X19n0347_001:0552a17_2": "悉皆平等。",
    "X19n0347_001:0552a17_3": "深心清淨。",
    "X19n0347_001:0552a18_0": "依佛智慧。",
    "X19n0347_001:0552a18_1": "則能見此佛土清淨。",
    "X19n0347_001:0552a18_2": "於是佛以足指按地。",
    "X19n0347_001:0552a19_3": "即時三千大千世界。",
    "X19n0347_001:0552a19_4": "若干百千珍寶嚴飾。",
    "X19n0347_001:0552a20_0": "譬如寶莊嚴佛無量功德寶莊嚴土。",
    "X19n0347_001:0552a20_1": "一切大眾。",
    "X19n0347_001:0552a21_0": "歎未曾有。",
    "X19n0347_001:0552a21_1": "而皆自見。",
    "X19n0347_001:0552a21_2": "坐寶蓮華。",
    "X19n0347_001:0552a21_3": "佛告舍利弗。",
    "X19n0347_001:0552a21_4": "汝且觀是佛土嚴淨。",
    "X19n0347_001:0552a22_5": "舍利弗言。",
    "X19n0347_001:0552a22_6": "唯然世尊。",
    "X19n0347_001:0552a22_7": "本所不見。",
    "X19n0347_001:0552a23_8": "本所不聞。",
    "X19n0347_001:0552a23_9": "今佛國土。",
    "X19n0347_001:0552a23_10": "嚴淨悉現。",
    "X19n0347_001:0552a23_11": "佛告舍利弗。",
    "X19n0347_001:0552a24_0": "我佛國土常淨若此。",
    "X19n0347_001:0552a24_1": "為欲度斯下劣人故。",
    "X19n0347_001:0552a24_2": "示是眾惡不淨土耳。",
    "X19n0347_001:0552b01_3": "譬如諸天。",
    "X19n0347_001:0552b01_4": "共寶器食。",
    "X19n0347_001:0552b01_5": "隨其福德。",
    "X19n0347_001:0552b02_0": "飯色有異。",
    "X19n0347_001:0552b02_1": "如是。",
    "X19n0347_001:0552b02_2": "舍利弗。",
    "X19n0347_001:0552b02_3": "若人心淨。",
    "X19n0347_001:0552b02_4": "便見此土功德莊嚴。",
    "X19n0347_001:0552b03_5": "當佛現此國土嚴淨之時。",
    "X19n0347_001:0552b03_6": "寶積所將五百長者子。",
    "X19n0347_001:0552b04_7": "皆得無生法忍。",
    "X19n0347_001:0552b04_8": "八萬四千人。",
    "X19n0347_001:0552b04_9": "皆發阿耨多羅三藐三菩提心。",
    "X19n0347_001:0552b05_10": "佛攝神足。",
    "X19n0347_001:0552b05_11": "於是世界。",
    "X19n0347_001:0552b05_12": "還復如故。",
    "X19n0347_001:0552b06_13": "求聲聞乘。",
    "X19n0347_001:0552b06_14": "三萬二千。",
    "X19n0347_001:0552b06_15": "諸天及人。",
    "X19n0347_001:0552b06_16": "知有為法皆悉無常。",
    "X19n0347_001:0552b07_17": "遠塵離垢得法眼淨。",
    "X19n0347_001:0552b07_18": "八千比丘。",
    "X19n0347_001:0552b07_19": "不"
}