{
    "T48n2016_076:0836a02_0": "宗鏡錄卷第七十六",
    "T48n2016_076:0836a04_0": "慧日永明寺主智覺禪師延壽集",
    "T48n2016_076:0836a05_0": "夫論一期真妄生死。",
    "T48n2016_076:0836a05_1": "約事而言。",
    "T48n2016_076:0836a05_2": "還有終始不。",
    "T48n2016_076:0836a06_0": "答。",
    "T48n2016_076:0836a06_1": "第一義中。",
    "T48n2016_076:0836a06_2": "尚無生死。",
    "T48n2016_076:0836a06_3": "何有始終。",
    "T48n2016_076:0836a06_4": "順世諦門中。",
    "T48n2016_076:0836a07_5": "隨眾生見。",
    "T48n2016_076:0836a07_6": "而妄說生死。",
    "T48n2016_076:0836a07_7": "如古德云。",
    "T48n2016_076:0836a07_8": "真妄相循。",
    "T48n2016_076:0836a08_9": "難窮初後者。",
    "T48n2016_076:0836a08_10": "釋云。",
    "T48n2016_076:0836a08_11": "若言先妄。",
    "T48n2016_076:0836a08_12": "後真。",
    "T48n2016_076:0836a08_13": "真則。",
    "T48n2016_076:0836a08_14": "有始。",
    "T48n2016_076:0836a09_15": "若謂。",
    "T48n2016_076:0836a09_16": "先真後妄。",
    "T48n2016_076:0836a09_17": "妄由何生。",
    "T48n2016_076:0836a09_18": "若妄依真起。",
    "T48n2016_076:0836a09_19": "真亦非真。",
    "T48n2016_076:0836a10_20": "若妄體即真。",
    "T48n2016_076:0836a10_21": "則妄亦無始。",
    "T48n2016_076:0836a10_22": "為破始起。",
    "T48n2016_076:0836a11_0": "立無始言。",
    "T48n2016_076:0836a11_1": "始既不存。",
    "T48n2016_076:0836a11_2": "終從何立。",
    "T48n2016_076:0836a11_3": "無終無始。",
    "T48n2016_076:0836a11_4": "豈有中間。",
    "T48n2016_076:0836a12_5": "故中論云。",
    "T48n2016_076:0836a12_6": "大聖之所說。",
    "T48n2016_076:0836a12_7": "本際不可得。",
    "T48n2016_076:0836a13_0": "生死無有始。",
    "T48n2016_076:0836a13_1": "亦復無有終。",
    "T48n2016_076:0836a13_2": "若無有始終。",
    "T48n2016_076:0836a13_3": "中當云何有。",
    "T48n2016_076:0836a14_4": "是故於此中。",
    "T48n2016_076:0836a14_5": "先後共亦無。",
    "T48n2016_076:0836a14_6": "真妄兩亡。",
    "T48n2016_076:0836a15_0": "方說真妄。",
    "T48n2016_076:0836a15_1": "真妄交徹。",
    "T48n2016_076:0836a15_2": "何定始終。",
    "T48n2016_076:0836a15_3": "問。",
    "T48n2016_076:0836a15_4": "如上所說。",
    "T48n2016_076:0836a16_5": "生死惡業。",
    "T48n2016_076:0836a16_6": "無量無邊。",
    "T48n2016_076:0836a16_7": "纔了此心。",
    "T48n2016_076:0836a16_8": "得一切同時解脫不。",
    "T48n2016_076:0836a17_9": "答。",
    "T48n2016_076:0836a17_10": "實有此理。",
    "T48n2016_076:0836a17_11": "全在當人。",
    "T48n2016_076:0836a17_12": "若障薄遮輕。",
    "T48n2016_076:0836a18_13": "直了直入。",
    "T48n2016_076:0836a18_14": "緣深機熟。",
    "T48n2016_076:0836a18_15": "頓悟頓修。",
    "T48n2016_076:0836a18_16": "如鏡淨明生。",
    "T48n2016_076:0836a19_17": "雲開月朗。",
    "T48n2016_076:0836a19_18": "或垢濃習重。",
    "T48n2016_076:0836a19_19": "觀劣心浮。",
    "T48n2016_076:0836a19_20": "雖信解一心。",
    "T48n2016_076:0836a20_21": "行門難立。",
    "T48n2016_076:0836a20_22": "有八重妄想之垢。",
    "T48n2016_076:0836a20_23": "猶緻網稠林。",
    "T48n2016_076:0836a21_24": "具六種繫縛之門。",
    "T48n2016_076:0836a21_25": "若堅氷膠漆。",
    "T48n2016_076:0836a21_26": "若非大力。",
    "T48n2016_076:0836a22_27": "曷能解分。",
    "T48n2016_076:0836a22_28": "如持地論云。",
    "T48n2016_076:0836a22_29": "妄想有八種。",
    "T48n2016_076:0836a22_30": "一自性妄想。",
    "T48n2016_076:0836a23_31": "即執色等法。",
    "T48n2016_076:0836a23_32": "各有自體。",
    "T48n2016_076:0836a23_33": "二差別妄想。",
    "T48n2016_076:0836a24_34": "即執色等。",
    "T48n2016_076:0836a24_35": "有可見不可見。",
    "T48n2016_076:0836a24_36": "對無對色差別。",
    "T48n2016_076:0836a25_0": "三攝受積聚妄想。",
    "T48n2016_076:0836a25_1": "即於陰中。",
    "T48n2016_076:0836a25_2": "執我眾生。",
    "T48n2016_076:0836a25_3": "於軍林等中。",
    "T48n2016_076:0836a26_4": "起定執實。",
    "T48n2016_076:0836a26_5": "此一分別。",
    "T48n2016_076:0836a26_6": "即前。",
    "T48n2016_076:0836a26_7": "執人。",
    "T48n2016_076:0836a26_8": "後執於法。",
    "T48n2016_076:0836a27_9": "四我見妄想。",
    "T48n2016_076:0836a27_10": "無我計我也。",
    "T48n2016_076:0836a27_11": "五我所妄想。",
    "T48n2016_076:0836a28_0": "即執我用。",
    "T48n2016_076:0836a28_1": "六有念妄想。",
    "T48n2016_076:0836a28_2": "即緣可愛淨境分別。",
    "T48n2016_076:0836a29_0": "七不念妄想。",
    "T48n2016_076:0836a29_1": "即緣可增不淨境分別。",
    "T48n2016_076:0836a29_2": "八俱相違妄想。",
    "T48n2016_076:0836b01_3": "即緣中容境分別。",
    "T48n2016_076:0836b01_4": "約經論有六種縛。",
    "T48n2016_076:0836b02_0": "先論心境二種縛者。",
    "T48n2016_076:0836b02_1": "一相應縛。",
    "T48n2016_076:0836b02_2": "二所緣縛。",
    "T48n2016_076:0836b02_3": "煩惱是心心所。",
    "T48n2016_076:0836b03_4": "起。",
    "T48n2016_076:0836b03_5": "必託於心王。",
    "T48n2016_076:0836b03_6": "心所染心。",
    "T48n2016_076:0836b03_7": "名相應縛。",
    "T48n2016_076:0836b04_8": "心心所法。",
    "T48n2016_076:0836b04_9": "俱能緣境。",
    "T48n2016_076:0836b04_10": "境不離繫。",
    "T48n2016_076:0836b04_11": "名所緣縛。",
    "T48n2016_076:0836b05_12": "次三界中四種縛者。",
    "T48n2016_076:0836b05_13": "一貪。",
    "T48n2016_076:0836b05_14": "二嗔。",
    "T48n2016_076:0836b05_15": "三見取。",
    "T48n2016_076:0836b05_16": "四戒取。",
    "T48n2016_076:0836b06_17": "貪嗔二縛。",
    "T48n2016_076:0836b06_18": "不令眾生出於欲界。",
    "T48n2016_076:0836b06_19": "論家舉喻。",
    "T48n2016_076:0836b07_20": "如守獄卒。",
    "T48n2016_076:0836b07_21": "見取戒取二縛。",
    "T48n2016_076:0836b07_22": "不令有情出色無色界。",
    "T48n2016_076:0836b08_23": "何者。",
    "T48n2016_076:0836b08_24": "見取。",
    "T48n2016_076:0836b08_25": "執劣為勝。",
    "T48n2016_076:0836b08_26": "執非想非非想處。",
    "T48n2016_076:0836b09_27": "及無想天。",
    "T48n2016_076:0836b09_28": "執為解脫涅槃。",
    "T48n2016_076:0836b09_29": "名為見取。",
    "T48n2016_076:0836b09_30": "戒取者。",
    "T48n2016_076:0836b10_31": "非因計因。",
    "T48n2016_076:0836b10_32": "執非想定。",
    "T48n2016_076:0836b10_33": "及無想定。",
    "T48n2016_076:0836b10_34": "并鷄戒。",
    "T48n2016_076:0836b10_35": "為生天因。",
    "T48n2016_076:0836b11_36": "解脫因。",
    "T48n2016_076:0836b11_37": "名戒禁取。",
    "T48n2016_076:0836b11_38": "由此二縛。",
    "T48n2016_076:0836b11_39": "令諸有情。",
    "T48n2016_076:0836b12_40": "不得出色無色界。",
    "T48n2016_076:0836b12_41": "如上妄想繫縛。",
    "T48n2016_076:0836b12_42": "除上根頓修外。",
    "T48n2016_076:0836b13_43": "即須約地位現觀之力。",
    "T48n2016_076:0836b13_44": "如經所明。",
    "T48n2016_076:0836b13_45": "現觀有六現。",
    "T48n2016_076:0836b14_46": "謂現前。",
    "T48n2016_076:0836b14_47": "觀。",
    "T48n2016_076:0836b14_48": "謂觀察。",
    "T48n2016_076:0836b14_49": "即真理常現在前。",
    "T48n2016_076:0836b15_50": "妙智恒能觀察。",
    "T48n2016_076:0836b15_51": "不令間斷。",
    "T48n2016_076:0836b15_52": "任運相應。",
    "T48n2016_076:0836b15_53": "瑜伽論云。",
    "T48n2016_076:0836b16_54": "一思現觀。",
    "T48n2016_076:0836b16_55": "謂上品思慧。",
    "T48n2016_076:0836b16_56": "引生煖等。",
    "T48n2016_076:0836b16_57": "四加行道中。",
    "T48n2016_076:0836b17_58": "觀察諸法。",
    "T48n2016_076:0836b17_59": "名為現觀。",
    "T48n2016_076:0836b17_60": "二信現觀。",
    "T48n2016_076:0836b17_61": "謂緣三寶世間出世間淨信。",
    "T48n2016_076:0836b18_62": "此助現觀。",
    "T48n2016_076:0836b18_63": "令不退轉。",
    "T48n2016_076:0836b19_0": "立現觀名。",
    "T48n2016_076:0836b19_1": "三戒現觀。",
    "T48n2016_076:0836b19_2": "謂道共無漏戒。",
    "T48n2016_076:0836b19_3": "能除破戒垢。",
    "T48n2016_076:0836b20_4": "令觀增明。",
    "T48n2016_076:0836b20_5": "亦名現觀。",
    "T48n2016_076:0836b20_6": "四智諦現觀。",
    "T48n2016_076:0836b20_7": "謂正體後得二智緣真俗。",
    "T48n2016_076:0836b21_8": "真俗。",
    "T48n2016_076:0836b21_9": "二諦也。",
    "T48n2016_076:0836b21_10": "五邊現觀。",
    "T48n2016_076:0836b22_0": "謂智諦觀後。",
    "T48n2016_076:0836b22_1": "觀諸緣安立世出世智。",
    "T48n2016_076:0836b22_2": "六究竟現觀。",
    "T48n2016_076:0836b23_3": "謂盡無生等究竟位智。",
    "T48n2016_076:0836b23_4": "古釋。",
    "T48n2016_076:0836b23_5": "前思現觀。",
    "T48n2016_076:0836b24_0": "資糧加行。",
    "T48n2016_076:0836b24_1": "所有智慧。",
    "T48n2016_076:0836b24_2": "但能伏。",
    "T48n2016_076:0836b24_3": "未能斷也。",
    "T48n2016_076:0836b24_4": "初地已上。",
    "T48n2016_076:0836b25_5": "信戒智諦。",
    "T48n2016_076:0836b25_6": "及邊現觀。",
    "T48n2016_076:0836b25_7": "當地。",
    "T48n2016_076:0836b25_8": "即斷。",
    "T48n2016_076:0836b25_9": "後地即伏。",
    "T48n2016_076:0836b26_10": "究竟一觀。",
    "T48n2016_076:0836b26_11": "非伏非斷。",
    "T48n2016_076:0836b26_12": "此斷有二。",
    "T48n2016_076:0836b26_13": "一共相斷。",
    "T48n2016_076:0836b27_14": "二自相斷。",
    "T48n2016_076:0836b27_15": "若斷惑證理之時。",
    "T48n2016_076:0836b27_16": "作空行相。",
    "T48n2016_076:0836b27_17": "及無我行相。",
    "T48n2016_076:0836b28_18": "即名共相。",
    "T48n2016_076:0836b28_19": "為空無我。",
    "T48n2016_076:0836b28_20": "該通四諦故。",
    "T48n2016_076:0836b29_0": "名共相斷。",
    "T48n2016_076:0836b29_1": "若斷惑證理之時。",
    "T48n2016_076:0836b29_2": "作真如寂滅行相。",
    "T48n2016_076:0836c01_3": "不通諸諦。",
    "T48n2016_076:0836c01_4": "唯在滅諦。",
    "T48n2016_076:0836c01_5": "名自相斷。",
    "T48n2016_076:0836c01_6": "又有三種斷。",
    "T48n2016_076:0836c02_7": "一自性斷。",
    "T48n2016_076:0836c02_8": "如燈破闇。",
    "T48n2016_076:0836c02_9": "智慧起時。",
    "T48n2016_076:0836c02_10": "煩惱闇障自性應斷。",
    "T48n2016_076:0836c03_11": "二不生斷。",
    "T48n2016_076:0836c03_12": "謂得初地法空之時。",
    "T48n2016_076:0836c03_13": "能令三塗惡道苦果。",
    "T48n2016_076:0836c04_14": "永更不生。",
    "T48n2016_076:0836c04_15": "人中無根。",
    "T48n2016_076:0836c04_16": "二形。",
    "T48n2016_076:0836c05_0": "北州無想天等種子。",
    "T48n2016_076:0836c05_1": "不生後果。",
    "T48n2016_076:0836c05_2": "名不生斷也。",
    "T48n2016_076:0836c06_3": "三緣縛斷者。",
    "T48n2016_076:0836c06_4": "但斷心中之惑。",
    "T48n2016_076:0836c06_5": "於外塵境不起貪嗔。",
    "T48n2016_076:0836c07_6": "於境雖緣而不染著。",
    "T48n2016_076:0836c07_7": "名緣縛斷也。",
    "T48n2016_076:0836c07_8": "於三斷之中。",
    "T48n2016_076:0836c08_9": "自性。",
    "T48n2016_076:0836c08_10": "不生。",
    "T48n2016_076:0836c08_11": "此二任運能斷。",
    "T48n2016_076:0836c08_12": "皆由緣縛一斷。",
    "T48n2016_076:0836c09_13": "能令三界因果不生。",
    "T48n2016_076:0836c09_14": "又古釋。",
    "T48n2016_076:0836c09_15": "智障。",
    "T48n2016_076:0836c09_16": "有其三門。",
    "T48n2016_076:0836c10_17": "一是智障。",
    "T48n2016_076:0836c10_18": "所謂分別有無之心。",
    "T48n2016_076:0836c10_19": "二是體障。",
    "T48n2016_076:0836c11_20": "謂觀非有非無之解。",
    "T48n2016_076:0836c11_21": "立己能者。",
    "T48n2016_076:0836c11_22": "故曰體障。",
    "T48n2016_076:0836c12_23": "三是治想。",
    "T48n2016_076:0836c12_24": "謂妄識中合如正慧。",
    "T48n2016_076:0836c12_25": "依此地有其三。",
    "T48n2016_076:0836c13_26": "初。",
    "T48n2016_076:0836c13_27": "一四地乃至七地斷除。",
    "T48n2016_076:0836c13_28": "四五六地。",
    "T48n2016_076:0836c13_29": "斷除分別取有之心。",
    "T48n2016_076:0836c14_30": "謂解法慢身淨慢等。",
    "T48n2016_076:0836c14_31": "入七地時。",
    "T48n2016_076:0836c15_32": "斷除分別取無之心。",
    "T48n2016_076:0836c15_33": "八地已上。",
    "T48n2016_076:0836c15_34": "斷除體障。",
    "T48n2016_076:0836c16_35": "前第七地。",
    "T48n2016_076:0836c16_36": "雖除分別有無之心。",
    "T48n2016_076:0836c16_37": "猶見己心以為能觀。",
    "T48n2016_076:0836c17_38": "如為所觀。",
    "T48n2016_076:0836c17_39": "其所觀如不即心。",
    "T48n2016_076:0836c17_40": "能。",
    "T48n2016_076:0836c17_41": "觀之心不即如。",
    "T48n2016_076:0836c18_42": "心。",
    "T48n2016_076:0836c18_43": "如別故。",
    "T48n2016_076:0836c18_44": "心外求法。",
    "T48n2016_076:0836c18_45": "故有功用。",
    "T48n2016_076:0836c19_0": "法外立心。",
    "T48n2016_076:0836c19_1": "故有體障。",
    "T48n2016_076:0836c19_2": "從第七地入八地時。",
    "T48n2016_076:0836c19_3": "破捨此障。",
    "T48n2016_076:0836c20_4": "觀察如外由來無心。",
    "T48n2016_076:0836c20_5": "心外無如。",
    "T48n2016_076:0836c20_6": "如外無心。",
    "T48n2016_076:0836c21_7": "心不異如。",
    "T48n2016_076:0836c21_8": "心外無如。",
    "T48n2016_076:0836c21_9": "如不異心。",
    "T48n2016_076:0836c21_10": "故能如心。",
    "T48n2016_076:0836c22_11": "泯同法界。",
    "T48n2016_076:0836c22_12": "廣大不動。",
    "T48n2016_076:0836c22_13": "以不異故。",
    "T48n2016_076:0836c22_14": "自外推求故捨功用。",
    "T48n2016_076:0836c23_15": "不復如外建立神智。",
    "T48n2016_076:0836c23_16": "故滅體障。",
    "T48n2016_076:0836c23_17": "體障滅故。",
    "T48n2016_076:0836c24_18": "名無障想。",
    "T48n2016_076:0836c24_19": "第三治想。",
    "T48n2016_076:0836c24_20": "至佛方滅。",
    "T48n2016_076:0836c24_21": "故入八地。",
    "T48n2016_076:0836c25_22": "雖無障想。",
    "T48n2016_076:0836c25_23": "而有治想。",
    "T48n2016_076:0836c25_24": "行八地已上。",
    "T48n2016_076:0836c25_25": "無生忍體。",
    "T48n2016_076:0836c26_26": "轉轉寂滅。",
    "T48n2016_076:0836c26_27": "令彼治想。",
    "T48n2016_076:0836c26_28": "運運自亡。",
    "T48n2016_076:0836c26_29": "至佛乃窮。",
    "T48n2016_076:0836c27_30": "故知萬境雖空。",
    "T48n2016_076:0836c27_31": "須得無心契合。",
    "T48n2016_076:0836c27_32": "不可口雖說空。",
    "T48n2016_076:0836c28_33": "行在有中。",
    "T48n2016_076:0836c28_34": "境智相應。",
    "T48n2016_076:0836c28_35": "能。",
    "T48n2016_076:0836c28_36": "所冥合。",
    "T48n2016_076:0836c28_37": "方能解縛。",
    "T48n2016_076:0836c29_38": "隨順無生耳。",
    "T48n2016_076:0836c29_39": "纔生取著。",
    "T48n2016_076:0836c29_40": "便成魔業。",
    "T48n2016_076:0836c29_41": "如華嚴經云。",
    "T48n2016_076:0837a01_42": "佛子。",
    "T48n2016_076:0837a01_43": "菩薩摩訶薩。",
    "T48n2016_076:0837a01_44": "有十種魔。",
    "T48n2016_076:0837a01_45": "何等為十。",
    "T48n2016_076:0837a02_46": "所謂蘊魔。",
    "T48n2016_076:0837a02_47": "生諸取故。",
    "T48n2016_076:0837a02_48": "煩惱魔。",
    "T48n2016_076:0837a02_49": "恒雜染故。",
    "T48n2016_076:0837a03_0": "業魔。",
    "T48n2016_076:0837a03_1": "能障礙故。",
    "T48n2016_076:0837a03_2": "心魔。",
    "T48n2016_076:0837a03_3": "起高慢故。",
    "T48n2016_076:0837a03_4": "死魔。",
    "T48n2016_076:0837a03_5": "捨生處故。",
    "T48n2016_076:0837a04_6": "天魔。",
    "T48n2016_076:0837a04_7": "自憍縱故。",
    "T48n2016_076:0837a04_8": "善根魔。",
    "T48n2016_076:0837a04_9": "恒執取故。",
    "T48n2016_076:0837a04_10": "三昧魔。",
    "T48n2016_076:0837a05_11": "久耽味故。",
    "T48n2016_076:0837a05_12": "善知識魔。",
    "T48n2016_076:0837a05_13": "起著心故。",
    "T48n2016_076:0837a05_14": "菩提法智魔。",
    "T48n2016_076:0837a06_15": "不願捨離故。",
    "T48n2016_076:0837a06_16": "是為十。",
    "T48n2016_076:0837a06_17": "菩薩摩訶薩。",
    "T48n2016_076:0837a06_18": "應作方便。",
    "T48n2016_076:0837a07_19": "速求遠離。",
    "T48n2016_076:0837a07_20": "疏釋云。",
    "T48n2016_076:0837a07_21": "一蘊魔者。",
    "T48n2016_076:0837a07_22": "身為道器。",
    "T48n2016_076:0837a07_23": "體與佛同。",
    "T48n2016_076:0837a08_24": "豈即是魔。",
    "T48n2016_076:0837a08_25": "蘊魔之名。",
    "T48n2016_076:0837a08_26": "特由取著。",
    "T48n2016_076:0837a08_27": "下九例爾。",
    "T48n2016_076:0837a09_28": "皆以下句。",
    "T48n2016_076:0837a09_29": "釋成魔義。",
    "T48n2016_076:0837a09_30": "是知以心分別。",
    "T48n2016_076:0837a09_31": "萬法皆魔。",
    "T48n2016_076:0837a10_32": "何但此十。",
    "T48n2016_076:0837a10_33": "故舉菩提。",
    "T48n2016_076:0837a10_34": "法智。",
    "T48n2016_076:0837a10_35": "以勝況劣。",
    "T48n2016_076:0837a11_0": "不以心分別。",
    "T48n2016_076:0837a11_1": "一切皆佛。",
    "T48n2016_076:0837a11_2": "豈捨魔界求佛界耶。",
    "T48n2016_076:0837a12_0": "然四魔直就體明。",
    "T48n2016_076:0837a12_1": "十魔多約執取。",
    "T48n2016_076:0837a12_2": "十表無盡故。",
    "T48n2016_076:0837a13_3": "菩提法者。",
    "T48n2016_076:0837a13_4": "即所證。",
    "T48n2016_076:0837a13_5": "智是能證。",
    "T48n2016_076:0837a13_6": "能所冥合。",
    "T48n2016_076:0837a13_7": "故名菩提。",
    "T48n2016_076:0837a14_8": "若不捨於分別。",
    "T48n2016_076:0837a14_9": "菩提之見。",
    "T48n2016_076:0837a14_10": "即是魔矣。",
    "T48n2016_076:0837a15_0": "若入宗鏡。",
    "T48n2016_076:0837a15_1": "分別自亡。",
    "T48n2016_076:0837a15_2": "既無能證之心。",
    "T48n2016_076:0837a15_3": "亦無所證之理。",
    "T48n2016_076:0837a16_4": "又華嚴經云。",
    "T48n2016_076:0837a16_5": "無有少法為智所入。",
    "T48n2016_076:0837a16_6": "亦無少智而入於法。",
    "T48n2016_076:0837a17_7": "是以駕一智箭。",
    "T48n2016_076:0837a17_8": "破眾魔軍。",
    "T48n2016_076:0837a18_0": "揮一慧刀。",
    "T48n2016_076:0837a18_1": "斬群疑網。",
    "T48n2016_076:0837a18_2": "斯乃宗鏡之力。",
    "T48n2016_076:0837a18_3": "餘何言哉。",
    "T48n2016_076:0837a19_4": "若不悟自心。",
    "T48n2016_076:0837a19_5": "未達斯旨。",
    "T48n2016_076:0837a19_6": "雖修智慧。",
    "T48n2016_076:0837a19_7": "不入圓常。",
    "T48n2016_076:0837a20_8": "縱練行門。",
    "T48n2016_076:0837a20_9": "唯增我慢。",
    "T48n2016_076:0837a20_10": "以未達一際法門故。",
    "T48n2016_076:0837a21_0": "但生分別。",
    "T48n2016_076:0837a21_1": "長養無明。",
    "T48n2016_076:0837a21_2": "如經云。",
    "T48n2016_076:0837a21_3": "若分別是。",
    "T48n2016_076:0837a21_4": "聲聞法。",
    "T48n2016_076:0837a22_5": "是緣覺法。",
    "T48n2016_076:0837a22_6": "是菩薩法。",
    "T48n2016_076:0837a22_7": "是諸佛法。",
    "T48n2016_076:0837a22_8": "此名為淨。",
    "T48n2016_076:0837a23_0": "此名不淨。",
    "T48n2016_076:0837a23_1": "此名為道。",
    "T48n2016_076:0837a23_2": "此名非道。",
    "T48n2016_076:0837a23_3": "是名菩薩憍慢。",
    "T48n2016_076:0837a24_4": "若入宗鏡。",
    "T48n2016_076:0837a24_5": "智行俱成。",
    "T48n2016_076:0837a24_6": "我慢山崩。",
    "T48n2016_076:0837a24_7": "貪癡水竭。",
    "T48n2016_076:0837a25_0": "勝負情盡。",
    "T48n2016_076:0837a25_1": "差別業亡。",
    "T48n2016_076:0837a25_2": "如弄珠吟云。",
    "T48n2016_076:0837a25_3": "消六賊兮爍四魔。",
    "T48n2016_076:0837a26_4": "摧我山兮竭愛河。",
    "T48n2016_076:0837a26_5": "龍女靈山親獻佛。",
    "T48n2016_076:0837a27_6": "貧兒衣裏枉蹉跎。",
    "T48n2016_076:0837a27_7": "問。",
    "T48n2016_076:0837a27_8": "五陰一法。",
    "T48n2016_076:0837a27_9": "即妄即真。",
    "T48n2016_076:0837a28_10": "既作塵勞生死之門。",
    "T48n2016_076:0837a28_11": "又成出世菩提之道。",
    "T48n2016_076:0837a29_0": "今且推妄。",
    "T48n2016_076:0837a29_1": "生死無從。",
    "T48n2016_076:0837a29_2": "經云。",
    "T48n2016_076:0837a29_3": "此陰纔滅。",
    "T48n2016_076:0837a29_4": "彼陰便生。",
    "T48n2016_076:0837b01_5": "既唯識無人。",
    "T48n2016_076:0837b01_6": "前陰滅。",
    "T48n2016_076:0837b01_7": "後陰如何得生。",
    "T48n2016_076:0837b01_8": "答。",
    "T48n2016_076:0837b02_0": "五陰性空非常。",
    "T48n2016_076:0837b02_1": "相續不斷。",
    "T48n2016_076:0837b02_2": "不常不斷。",
    "T48n2016_076:0837b02_3": "即是正因。",
    "T48n2016_076:0837b03_4": "如華嚴疏云。",
    "T48n2016_076:0837b03_5": "五蘊相續。",
    "T48n2016_076:0837b03_6": "即是正因。",
    "T48n2016_076:0837b03_7": "亦名生因。",
    "T48n2016_076:0837b04_8": "言正因者。",
    "T48n2016_076:0837b04_9": "是中道義。",
    "T48n2016_076:0837b04_10": "中道即是佛性。",
    "T48n2016_076:0837b04_11": "謂現在陰滅。",
    "T48n2016_076:0837b05_12": "中陰陰生。",
    "T48n2016_076:0837b05_13": "是現在陰。",
    "T48n2016_076:0837b05_14": "終不變為中陰五陰。",
    "T48n2016_076:0837b06_15": "故現陰非常。",
    "T48n2016_076:0837b06_16": "如種生芽。",
    "T48n2016_076:0837b06_17": "種不至芽。",
    "T48n2016_076:0837b06_18": "雖不至芽。",
    "T48n2016_076:0837b07_19": "而能生芽。",
    "T48n2016_076:0837b07_20": "此現在陰。",
    "T48n2016_076:0837b07_21": "雖不至後。",
    "T48n2016_076:0837b07_22": "而能生後。",
    "T48n2016_076:0837b08_23": "則現陰非斷。",
    "T48n2016_076:0837b08_24": "而中陰五陰。",
    "T48n2016_076:0837b08_25": "亦非自生。",
    "T48n2016_076:0837b08_26": "不從餘來。",
    "T48n2016_076:0837b09_27": "因現五陰。",
    "T48n2016_076:0837b09_28": "生中陰陰。",
    "T48n2016_076:0837b09_29": "斯則後陰非無因。",
    "T48n2016_076:0837b10_0": "故。",
    "T48n2016_076:0837b10_1": "後陰非常。",
    "T48n2016_076:0837b10_2": "既能續前故。",
    "T48n2016_076:0837b10_3": "後陰非斷。",
    "T48n2016_076:0837b10_4": "非斷非常。",
    "T48n2016_076:0837b11_5": "是中道義正因性也。",
    "T48n2016_076:0837b11_6": "又依台教。",
    "T48n2016_076:0837b11_7": "略有九種五陰。",
    "T48n2016_076:0837b12_8": "皆無自體。",
    "T48n2016_076:0837b12_9": "唯逐心生。",
    "T48n2016_076:0837b12_10": "是以華嚴經頌云。",
    "T48n2016_076:0837b13_0": "一切眾生界。",
    "T48n2016_076:0837b13_1": "皆在三世中。",
    "T48n2016_076:0837b13_2": "三世諸眾生。",
    "T48n2016_076:0837b13_3": "悉住五蘊中。",
    "T48n2016_076:0837b14_4": "諸蘊業為本。",
    "T48n2016_076:0837b14_5": "諸業心為本。",
    "T48n2016_076:0837b14_6": "心法猶如幻。",
    "T48n2016_076:0837b15_7": "世間亦如是。",
    "T48n2016_076:0837b15_8": "九種五陰者。",
    "T48n2016_076:0837b15_9": "一期色心。",
    "T48n2016_076:0837b15_10": "名果報五陰。",
    "T48n2016_076:0837b16_11": "平平想受。",
    "T48n2016_076:0837b16_12": "無記五陰。",
    "T48n2016_076:0837b16_13": "起見起愛者。",
    "T48n2016_076:0837b16_14": "二種穢污五陰。",
    "T48n2016_076:0837b17_15": "動身口業。",
    "T48n2016_076:0837b17_16": "善惡兩種五陰。",
    "T48n2016_076:0837b17_17": "變化示現。",
    "T48n2016_076:0837b18_18": "工巧五陰。",
    "T48n2016_076:0837b18_19": "五善根人。",
    "T48n2016_076:0837b18_20": "方便五陰。",
    "T48n2016_076:0837b18_21": "證四果者。",
    "T48n2016_076:0837b19_22": "無漏五陰。",
    "T48n2016_076:0837b19_23": "如是種種。",
    "T48n2016_076:0837b19_24": "原從心出。",
    "T48n2016_076:0837b19_25": "正法念經云。",
    "T48n2016_076:0837b20_26": "如畫師手。",
    "T48n2016_076:0837b20_27": "畫出五綵。",
    "T48n2016_076:0837b20_28": "黑。",
    "T48n2016_076:0837b20_29": "青。",
    "T48n2016_076:0837b20_30": "赤。",
    "T48n2016_076:0837b20_31": "黃。",
    "T48n2016_076:0837b20_32": "白。",
    "T48n2016_076:0837b20_33": "白白。",
    "T48n2016_076:0837b20_34": "畫手譬心。",
    "T48n2016_076:0837b21_35": "黑色譬地獄。",
    "T48n2016_076:0837b21_36": "青譬鬼。",
    "T48n2016_076:0837b21_37": "赤譬畜。",
    "T48n2016_076:0837b21_38": "黃譬脩羅。",
    "T48n2016_076:0837b22_39": "白譬人。",
    "T48n2016_076:0837b22_40": "白白譬天。",
    "T48n2016_076:0837b22_41": "此六種陰。",
    "T48n2016_076:0837b22_42": "止齊界內。",
    "T48n2016_076:0837b22_43": "若依華嚴經云。",
    "T48n2016_076:0837b23_44": "心如工畫師。",
    "T48n2016_076:0837b23_45": "畫種種五陰。",
    "T48n2016_076:0837b23_46": "界內界外。",
    "T48n2016_076:0837b24_47": "一切世間中。",
    "T48n2016_076:0837b24_48": "莫不從心造。",
    "T48n2016_076:0837b24_49": "世間色心。",
    "T48n2016_076:0837b24_50": "尚叵窮盡。",
    "T48n2016_076:0837b25_51": "況復出世寧可凡心知。",
    "T48n2016_076:0837b25_52": "凡眼瞖尚不見近。",
    "T48n2016_076:0837b26_53": "那得見遠。",
    "T48n2016_076:0837b26_54": "彌生曠劫。",
    "T48n2016_076:0837b26_55": "不覩界內一隅。",
    "T48n2016_076:0837b26_56": "況復界外邊表。",
    "T48n2016_076:0837b27_57": "如渴鹿逐焰狂狗齩雷。",
    "T48n2016_076:0837b27_58": "何有得理。",
    "T48n2016_076:0837b28_59": "所以龍樹破五陰一異。",
    "T48n2016_076:0837b28_60": "同時。",
    "T48n2016_076:0837b28_61": "前後。",
    "T48n2016_076:0837b28_62": "皆如焰幻響化。",
    "T48n2016_076:0837b29_63": "悉不可得。",
    "T48n2016_076:0837b29_64": "寧更執於王數同時異時耶。",
    "T48n2016_076:0837c01_65": "然界內外一切陰入。",
    "T48n2016_076:0837c01_66": "皆由心起。",
    "T48n2016_076:0837c01_67": "佛告比丘。",
    "T48n2016_076:0837c02_0": "一法攝一切法。",
    "T48n2016_076:0837c02_1": "所謂心是。",
    "T48n2016_076:0837c02_2": "論偈云。",
    "T48n2016_076:0837c02_3": "一切世間中。",
    "T48n2016_076:0837c03_4": "但有名與色。",
    "T48n2016_076:0837c03_5": "若欲如實觀。",
    "T48n2016_076:0837c03_6": "但當觀名色。",
    "T48n2016_076:0837c03_7": "心是惑本。",
    "T48n2016_076:0837c04_8": "其義如是。",
    "T48n2016_076:0837c04_9": "輔行記云。",
    "T48n2016_076:0837c04_10": "若示不思議境體。",
    "T48n2016_076:0837c05_11": "觀心即足。",
    "T48n2016_076:0837c05_12": "以心遍。",
    "T48n2016_076:0837c05_13": "故攝餘法。",
    "T48n2016_076:0837c05_14": "又非但心攝一切。",
    "T48n2016_076:0837c06_15": "亦乃一切攝心。",
    "T48n2016_076:0837c06_16": "故四念處觀云。",
    "T48n2016_076:0837c06_17": "非但唯識。",
    "T48n2016_076:0837c07_18": "亦乃唯色唯聲等。",
    "T48n2016_076:0837c07_19": "今從廣之狹。",
    "T48n2016_076:0837c07_20": "正示境體。",
    "T48n2016_076:0837c08_0": "陰界入三並可為境。",
    "T48n2016_076:0837c08_1": "以寬縵難示故。",
    "T48n2016_076:0837c08_2": "從指的。",
    "T48n2016_076:0837c09_0": "略二界入。",
    "T48n2016_076:0837c09_1": "就陰。",
    "T48n2016_076:0837c09_2": "如去丈就尺。",
    "T48n2016_076:0837c09_3": "略四陰從識陰。",
    "T48n2016_076:0837c10_0": "如去尺就寸。",
    "T48n2016_076:0837c10_1": "以由界入。",
    "T48n2016_076:0837c10_2": "所攝寬多。",
    "T48n2016_076:0837c10_3": "陰唯有為。",
    "T48n2016_076:0837c11_0": "有為之中。",
    "T48n2016_076:0837c11_1": "義兼心色故。",
    "T48n2016_076:0837c11_2": "置色存心。",
    "T48n2016_076:0837c11_3": "心名復含心及心所。",
    "T48n2016_076:0837c12_4": "今且觀心王。",
    "T48n2016_076:0837c12_5": "置於心所。",
    "T48n2016_076:0837c12_6": "則一念心。",
    "T48n2016_076:0837c13_0": "十界三科如丈。",
    "T48n2016_076:0837c13_1": "一界五陰如尺。",
    "T48n2016_076:0837c13_2": "唯在識心如寸。",
    "T48n2016_076:0837c14_3": "若達心具一切法已。",
    "T48n2016_076:0837c14_4": "方能度入一切色心。",
    "T48n2016_076:0837c15_0": "如一一尺。",
    "T48n2016_076:0837c15_1": "無非是寸。",
    "T48n2016_076:0837c15_2": "及一一丈。",
    "T48n2016_076:0837c15_3": "無非是尺。",
    "T48n2016_076:0837c15_4": "是故丈尺。",
    "T48n2016_076:0837c16_5": "全體是寸。",
    "T48n2016_076:0837c16_6": "故知若真諦。",
    "T48n2016_076:0837c16_7": "若俗諦。",
    "T48n2016_076:0837c16_8": "若有為。",
    "T48n2016_076:0837c17_9": "若無為。",
    "T48n2016_076:0837c17_10": "一剎一塵。",
    "T48n2016_076:0837c17_11": "無非心矣。",
    "T48n2016_076:0837c17_12": "今宗鏡撮其樞要。",
    "T48n2016_076:0837c18_13": "蓋為斯焉。",
    "T48n2016_076:0837c18_14": "今但觀識陰。",
    "T48n2016_076:0837c18_15": "識陰者。",
    "T48n2016_076:0837c18_16": "心是也。",
    "T48n2016_076:0837c19_17": "既從心生。",
    "T48n2016_076:0837c19_18": "非空非有。",
    "T48n2016_076:0837c19_19": "不生不滅。",
    "T48n2016_076:0837c19_20": "無住無依。",
    "T48n2016_076:0837c20_21": "於生死業果之門。",
    "T48n2016_076:0837c20_22": "不可思議。",
    "T48n2016_076:0837c20_23": "以因緣和合。",
    "T48n2016_076:0837c21_0": "相。",
    "T48n2016_076:0837c21_1": "似相續。",
    "T48n2016_076:0837c21_2": "如有主宰。",
    "T48n2016_076:0837c21_3": "諸趣往來。",
    "T48n2016_076:0837c21_4": "至理窮之。",
    "T48n2016_076:0837c21_5": "畢竟無體。",
    "T48n2016_076:0837c22_6": "如磁石吸鐵。",
    "T48n2016_076:0837c22_7": "明鏡現像。",
    "T48n2016_076:0837c22_8": "此皆法爾。",
    "T48n2016_076:0837c22_9": "豈有情乎。",
    "T48n2016_076:0837c23_10": "般若假名論云。",
    "T48n2016_076:0837c23_11": "諸蘊循環。",
    "T48n2016_076:0837c23_12": "受諸異趣。",
    "T48n2016_076:0837c24_0": "名為取者。",
    "T48n2016_076:0837c24_1": "是中無人。",
    "T48n2016_076:0837c24_2": "能取諸趣。",
    "T48n2016_076:0837c24_3": "捨於現蘊而受後蘊。",
    "T48n2016_076:0837c25_4": "如去故衣而著新衣。",
    "T48n2016_076:0837c25_5": "然依俗諦。",
    "T48n2016_076:0837c25_6": "譬如因質而現於像。",
    "T48n2016_076:0837c26_7": "質不至像。",
    "T48n2016_076:0837c26_8": "而有像現。",
    "T48n2016_076:0837c26_9": "由前蘊故。",
    "T48n2016_076:0837c27_10": "後蘊續生。",
    "T48n2016_076:0837c27_11": "前不至後。",
    "T48n2016_076:0837c27_12": "而後相續。",
    "T48n2016_076:0837c27_13": "是故菩薩。",
    "T48n2016_076:0837c28_0": "無取者想。",
    "T48n2016_076:0837c28_1": "大涅槃經云。",
    "T48n2016_076:0837c28_2": "如蠟印印泥。",
    "T48n2016_076:0837c28_3": "印與泥合。",
    "T48n2016_076:0837c29_4": "印滅文成。",
    "T48n2016_076:0837c29_5": "文非泥出。",
    "T48n2016_076:0837c29_6": "不餘處來。",
    "T48n2016_076:0837c29_7": "以印因緣。",
    "T48n2016_076:0838a01_8": "而成是文。",
    "T48n2016_076:0838a01_9": "經合喻云。",
    "T48n2016_076:0838a01_10": "現在陰滅。",
    "T48n2016_076:0838a01_11": "中陰陰生。",
    "T48n2016_076:0838a02_0": "是現在陰。",
    "T48n2016_076:0838a02_1": "終不變為中陰五陰。",
    "T48n2016_076:0838a02_2": "亦非自生。",
    "T48n2016_076:0838a02_3": "不從餘來。",
    "T48n2016_076:0838a03_4": "因現陰故。",
    "T48n2016_076:0838a03_5": "生中陰陰。",
    "T48n2016_076:0838a03_6": "譬合云。",
    "T48n2016_076:0838a03_7": "如印印泥。",
    "T48n2016_076:0838a04_8": "印滅文成。",
    "T48n2016_076:0838a04_9": "名雖無差。",
    "T48n2016_076:0838a04_10": "而時節各異。",
    "T48n2016_076:0838a04_11": "是故我說。",
    "T48n2016_076:0838a05_12": "中陰五陰。",
    "T48n2016_076:0838a05_13": "非肉眼見。",
    "T48n2016_076:0838a05_14": "天眼所見。",
    "T48n2016_076:0838a05_15": "釋曰。",
    "T48n2016_076:0838a06_0": "現陰如印。",
    "T48n2016_076:0838a06_1": "中陰生處義之如泥。",
    "T48n2016_076:0838a06_2": "現在陰滅。",
    "T48n2016_076:0838a07_0": "名為印壞。",
    "T48n2016_076:0838a07_1": "中陰陰起。",
    "T48n2016_076:0838a07_2": "名為文成。",
    "T48n2016_076:0838a07_3": "於此復以中陰為印。",
    "T48n2016_076:0838a08_4": "業逼受胎。",
    "T48n2016_076:0838a08_5": "名為印泥。",
    "T48n2016_076:0838a08_6": "中陰陰滅。",
    "T48n2016_076:0838a09_0": "名為印壞。",
    "T48n2016_076:0838a09_1": "未來陰起。",
    "T48n2016_076:0838a09_2": "名為文成。",
    "T48n2016_076:0838a09_3": "業種未斷。",
    "T48n2016_076:0838a09_4": "文復為印。",
    "T48n2016_076:0838a10_5": "印復為文。",
    "T48n2016_076:0838a10_6": "文印相成。",
    "T48n2016_076:0838a10_7": "不可窮已。",
    "T48n2016_076:0838a10_8": "生死不斷。",
    "T48n2016_076:0838a11_9": "法喻可知。",
    "T48n2016_076:0838a11_10": "又如燈焰。",
    "T48n2016_076:0838a11_11": "前焰引後焰。",
    "T48n2016_076:0838a11_12": "後焰續前焰。",
    "T48n2016_076:0838a12_13": "相續不斷。",
    "T48n2016_076:0838a12_14": "似常似一。",
    "T48n2016_076:0838a12_15": "凡夫不達。",
    "T48n2016_076:0838a13_0": "或執生死為常。",
    "T48n2016_076:0838a13_1": "不知前焰無體。",
    "T48n2016_076:0838a13_2": "因後焰續起。",
    "T48n2016_076:0838a14_3": "後焰無體。",
    "T48n2016_076:0838a14_4": "仗前焰引生。",
    "T48n2016_076:0838a14_5": "焰焰皆虛。",
    "T48n2016_076:0838a14_6": "自性寂滅。",
    "T48n2016_076:0838a15_7": "此一念心。",
    "T48n2016_076:0838a15_8": "亦復如是。",
    "T48n2016_076:0838a15_9": "新新生滅。",
    "T48n2016_076:0838a15_10": "續續輪迴。",
    "T48n2016_076:0838a16_0": "乃至一念不住。",
    "T48n2016_076:0838a16_1": "猶如燈焰。",
    "T48n2016_076:0838a16_2": "不細觀察。",
    "T48n2016_076:0838a16_3": "執此生滅。",
    "T48n2016_076:0838a17_4": "為一為常。",
    "T48n2016_076:0838a17_5": "又不了前焰纔滅。",
    "T48n2016_076:0838a17_6": "後焰續生。",
    "T48n2016_076:0838a17_7": "念念相續。",
    "T48n2016_076:0838a18_8": "未曾間滅。",
    "T48n2016_076:0838a18_9": "或執生死為斷。",
    "T48n2016_076:0838a18_10": "若深達因緣之理。",
    "T48n2016_076:0838a19_11": "自然不落斷常。",
    "T48n2016_076:0838a19_12": "何者。",
    "T48n2016_076:0838a19_13": "以因緣無性。",
    "T48n2016_076:0838a20_0": "不可得。",
    "T48n2016_076:0838a20_1": "故非常。",
    "T48n2016_076:0838a20_2": "以無性因緣能相續。",
    "T48n2016_076:0838a20_3": "故非斷。",
    "T48n2016_076:0838a21_0": "又此五陰。",
    "T48n2016_076:0838a21_1": "只是一法。",
    "T48n2016_076:0838a21_2": "若執成斷常。",
    "T48n2016_076:0838a21_3": "是凡夫見。",
    "T48n2016_076:0838a22_0": "若破析成空。",
    "T48n2016_076:0838a22_1": "是藏教人。",
    "T48n2016_076:0838a22_2": "若了陰無性。",
    "T48n2016_076:0838a22_3": "體此成空。",
    "T48n2016_076:0838a23_4": "是通教人。",
    "T48n2016_076:0838a23_5": "若悟此五陰不空。",
    "T48n2016_076:0838a23_6": "具足佛法。",
    "T48n2016_076:0838a23_7": "修智斷惑次第生起。",
    "T48n2016_076:0838a24_8": "是別教菩薩。",
    "T48n2016_076:0838a24_9": "若了此即真。",
    "T48n2016_076:0838a25_0": "更無別法。",
    "T48n2016_076:0838a25_1": "念念圓滿具十法界。",
    "T48n2016_076:0838a25_2": "即圓教菩薩。",
    "T48n2016_076:0838a26_0": "如薄運者。",
    "T48n2016_076:0838a26_1": "覩金成蛇。",
    "T48n2016_076:0838a26_2": "厚福人。",
    "T48n2016_076:0838a26_3": "捉石為寶。",
    "T48n2016_076:0838a26_4": "法無高下。",
    "T48n2016_076:0838a27_5": "人自昇沈耳。",
    "T48n2016_076:0838a27_6": "但不造貧富業。",
    "T48n2016_076:0838a27_7": "終無勝劣報。",
    "T48n2016_076:0838a28_8": "如大智度論偈云。",
    "T48n2016_076:0838a28_9": "先世業自作。",
    "T48n2016_076:0838a28_10": "轉為種種形。",
    "T48n2016_076:0838a29_11": "虛空不受害。",
    "T48n2016_076:0838a29_12": "無業亦如是。",
    "T48n2016_076:0838a29_13": "問。",
    "T48n2016_076:0838a29_14": "生死相續。",
    "T48n2016_076:0838b01_0": "由諸習氣。",
    "T48n2016_076:0838b01_1": "有幾習氣。",
    "T48n2016_076:0838b01_2": "能成輪轉。",
    "T48n2016_076:0838b01_3": "答。",
    "T48n2016_076:0838b01_4": "古釋。",
    "T48n2016_076:0838b01_5": "習氣自體。",
    "T48n2016_076:0838b02_6": "總有三義。",
    "T48n2016_076:0838b02_7": "習氣者。",
    "T48n2016_076:0838b02_8": "與種子名異體同。",
    "T48n2016_076:0838b03_0": "習氣。",
    "T48n2016_076:0838b03_1": "即約熏習時而論。",
    "T48n2016_076:0838b03_2": "種子。",
    "T48n2016_076:0838b03_3": "即對現行立號。",
    "T48n2016_076:0838b04_0": "都有三義。",
    "T48n2016_076:0838b04_1": "一種子名習氣。",
    "T48n2016_076:0838b04_2": "氣者氣分。",
    "T48n2016_076:0838b04_3": "習謂熏習。",
    "T48n2016_076:0838b05_4": "由彼現行熏習。",
    "T48n2016_076:0838b05_5": "得此氣分故。",
    "T48n2016_076:0838b05_6": "二現行亦名習氣。",
    "T48n2016_076:0838b06_7": "謂都由種子能生現行。",
    "T48n2016_076:0838b06_8": "是種子家之氣分。",
    "T48n2016_076:0838b07_9": "三習氣名習氣。",
    "T48n2016_076:0838b07_10": "如裹香紙。",
    "T48n2016_076:0838b07_11": "而有氣分。",
    "T48n2016_076:0838b07_12": "唯識論云。",
    "T48n2016_076:0838b08_13": "而熏本識起自功能。",
    "T48n2016_076:0838b08_14": "即此功能說為習氣。",
    "T48n2016_076:0838b09_15": "功能者。",
    "T48n2016_076:0838b09_16": "是習氣義。",
    "T48n2016_076:0838b09_17": "體。",
    "T48n2016_076:0838b09_18": "即種子。",
    "T48n2016_076:0838b09_19": "略有三種習氣。",
    "T48n2016_076:0838b10_20": "一名言習氣。",
    "T48n2016_076:0838b10_21": "二我執習氣。",
    "T48n2016_076:0838b10_22": "三有支習氣。",
    "T48n2016_076:0838b10_23": "一名言習氣。",
    "T48n2016_076:0838b11_24": "謂有為法各別親種。",
    "T48n2016_076:0838b11_25": "名言有二。",
    "T48n2016_076:0838b11_26": "一表義名言。",
    "T48n2016_076:0838b12_27": "即能詮義音聲差別。",
    "T48n2016_076:0838b12_28": "二顯境名言。",
    "T48n2016_076:0838b13_0": "即能了境心心所法。",
    "T48n2016_076:0838b13_1": "隨二名言。",
    "T48n2016_076:0838b13_2": "所熏成種。",
    "T48n2016_076:0838b13_3": "作有為法。",
    "T48n2016_076:0838b14_4": "各別因緣。",
    "T48n2016_076:0838b14_5": "二我執習氣。",
    "T48n2016_076:0838b14_6": "謂虛妄執我我所種。",
    "T48n2016_076:0838b15_7": "我執有二一。",
    "T48n2016_076:0838b15_8": "俱生我執。",
    "T48n2016_076:0838b15_9": "即修所斷我我所執。",
    "T48n2016_076:0838b16_10": "二分別我執。",
    "T48n2016_076:0838b16_11": "即見所斷我我所執。",
    "T48n2016_076:0838b16_12": "隨二我執。",
    "T48n2016_076:0838b17_13": "所熏成種。",
    "T48n2016_076:0838b17_14": "今有情等。",
    "T48n2016_076:0838b17_15": "自他差別。",
    "T48n2016_076:0838b17_16": "三有支習氣。",
    "T48n2016_076:0838b18_17": "謂招三界異熟業種。",
    "T48n2016_076:0838b18_18": "有支有二。",
    "T48n2016_076:0838b18_19": "一有漏善。",
    "T48n2016_076:0838b19_20": "即是能招可愛果業。",
    "T48n2016_076:0838b19_21": "二諸不善。",
    "T48n2016_076:0838b19_22": "即是能招非愛果業。",
    "T48n2016_076:0838b20_23": "隨二有支。",
    "T48n2016_076:0838b20_24": "所熏成種。",
    "T48n2016_076:0838b20_25": "令異熟果。",
    "T48n2016_076:0838b21_0": "善惡趣別。",
    "T48n2016_076:0838b21_1": "應知我執有支習氣。",
    "T48n2016_076:0838b21_2": "於差別果。",
    "T48n2016_076:0838b22_0": "是增上緣。",
    "T48n2016_076:0838b22_1": "前云生死因業習氣者。",
    "T48n2016_076:0838b22_2": "應知即是有支習氣。",
    "T48n2016_076:0838b23_3": "二取習氣。",
    "T48n2016_076:0838b23_4": "應知即是我執名言二種習氣。",
    "T48n2016_076:0838b24_5": "取我我所。",
    "T48n2016_076:0838b24_6": "及取名言。",
    "T48n2016_076:0838b24_7": "而熏成故。",
    "T48n2016_076:0838b24_8": "皆說名取。",
    "T48n2016_076:0838b25_9": "釋云。",
    "T48n2016_076:0838b25_10": "表義名言者。",
    "T48n2016_076:0838b25_11": "唯第六識。",
    "T48n2016_076:0838b25_12": "能緣其名。",
    "T48n2016_076:0838b26_13": "能發其名。",
    "T48n2016_076:0838b26_14": "餘皆不緣。",
    "T48n2016_076:0838b26_15": "亦不能發。",
    "T48n2016_076:0838b26_16": "即唯詮義音聲之差別。",
    "T48n2016_076:0838b27_17": "簡非詮表聲。",
    "T48n2016_076:0838b27_18": "彼非名言故。",
    "T48n2016_076:0838b27_19": "名唯無記。",
    "T48n2016_076:0838b28_20": "然名是聲上屈曲差別。",
    "T48n2016_076:0838b28_21": "唯無記性。",
    "T48n2016_076:0838b28_22": "不能熏成色心等種。",
    "T48n2016_076:0838b29_23": "然因名故。",
    "T48n2016_076:0838b29_24": "心隨其名。",
    "T48n2016_076:0838b29_25": "變似五蘊三性法等。",
    "T48n2016_076:0838c01_26": "而熏成等種。",
    "T48n2016_076:0838c01_27": "因名起種。",
    "T48n2016_076:0838c01_28": "號名言種。",
    "T48n2016_076:0838c02_29": "一切熏種。",
    "T48n2016_076:0838c02_30": "皆由心心所。",
    "T48n2016_076:0838c02_31": "心心所種。",
    "T48n2016_076:0838c02_32": "有因外緣。",
    "T48n2016_076:0838c03_33": "有不依外者。",
    "T48n2016_076:0838c03_34": "不依外者。",
    "T48n2016_076:0838c03_35": "名顯境名言。",
    "T48n2016_076:0838c03_36": "若依外者。",
    "T48n2016_076:0838c04_37": "名表義名言。",
    "T48n2016_076:0838c04_38": "分二別。",
    "T48n2016_076:0838c04_39": "然名自體。",
    "T48n2016_076:0838c04_40": "不能熏種。",
    "T48n2016_076:0838c05_41": "顯境名言者。",
    "T48n2016_076:0838c05_42": "即能了境心心所法。",
    "T48n2016_076:0838c05_43": "即是一切七識見分等心。",
    "T48n2016_076:0838c06_44": "非相分心。",
    "T48n2016_076:0838c06_45": "不能顯境故。",
    "T48n2016_076:0838c06_46": "是以分段生死。",
    "T48n2016_076:0838c07_47": "從正使有。",
    "T48n2016_076:0838c07_48": "即是凡夫。",
    "T48n2016_076:0838c07_49": "若變易生死。",
    "T48n2016_076:0838c08_50": "從習氣生。",
    "T48n2016_076:0838c08_51": "即是二乘。",
    "T48n2016_076:0838c08_52": "雖斷正使。",
    "T48n2016_076:0838c08_53": "不斷習氣。",
    "T48n2016_076:0838c09_0": "於中有二。",
    "T48n2016_076:0838c09_1": "一煩惱習氣。",
    "T48n2016_076:0838c09_2": "二業習氣。",
    "T48n2016_076:0838c09_3": "一煩惱習氣者。",
    "T48n2016_076:0838c10_4": "如難陀有欲習。",
    "T48n2016_076:0838c10_5": "往昔數生。",
    "T48n2016_076:0838c10_6": "身為國王。",
    "T48n2016_076:0838c10_7": "習近五欲故。",
    "T48n2016_076:0838c11_8": "舍利弗有嗔習。",
    "T48n2016_076:0838c11_9": "往昔數生。",
    "T48n2016_076:0838c11_10": "曾受蝎身。",
    "T48n2016_076:0838c12_11": "畢陵伽婆蹉有慢習。",
    "T48n2016_076:0838c12_12": "往昔數生。",
    "T48n2016_076:0838c12_13": "身是大婆羅門。",
    "T48n2016_076:0838c13_14": "博學多才。",
    "T48n2016_076:0838c13_15": "我慢輕物。",
    "T48n2016_076:0838c13_16": "乃至槃特比丘。",
    "T48n2016_076:0838c13_17": "有癡餘習等。",
    "T48n2016_076:0838c14_18": "二業習氣者。",
    "T48n2016_076:0838c14_19": "如牛呞比丘。",
    "T48n2016_076:0838c14_20": "往昔是牛身。",
    "T48n2016_076:0838c15_21": "林間奔走。",
    "T48n2016_076:0838c15_22": "觸著遺棄故破袈裟。",
    "T48n2016_076:0838c15_23": "以是因緣。",
    "T48n2016_076:0838c16_24": "雖獲道果。",
    "T48n2016_076:0838c16_25": "以業習故。",
    "T48n2016_076:0838c16_26": "使之然也。",
    "T48n2016_076:0838c16_27": "又如迦葉聞琴起舞。",
    "T48n2016_076:0838c17_28": "阿難常好歌吟。",
    "T48n2016_076:0838c17_29": "俱以往昔曾為樂人。",
    "T48n2016_076:0838c18_30": "以業習之餘故。",
    "T48n2016_076:0838c18_31": "若煩惱餘習。",
    "T48n2016_076:0838c18_32": "是變易緣。",
    "T48n2016_076:0838c18_33": "有業餘習。",
    "T48n2016_076:0838c19_34": "是變易因。",
    "T48n2016_076:0838c19_35": "感變易生死。",
    "T48n2016_076:0838c19_36": "即是果報。",
    "T48n2016_076:0838c20_0": "此二乘人。",
    "T48n2016_076:0838c20_1": "未得如來一心三點涅槃。",
    "T48n2016_076:0838c20_2": "於無學位。",
    "T48n2016_076:0838c21_3": "雖見修惑盡。",
    "T48n2016_076:0838c21_4": "所有無知。",
    "T48n2016_076:0838c21_5": "皆是無明之餘習。",
    "T48n2016_076:0838c22_0": "亦名無明住地。",
    "T48n2016_076:0838c22_1": "亦名所知之障。",
    "T48n2016_076:0838c22_2": "亦名塵沙無知。",
    "T48n2016_076:0838c23_3": "又菩薩約化門有十種習氣。",
    "T48n2016_076:0838c23_4": "華嚴經離世間品云。",
    "T48n2016_076:0838c24_5": "佛子。",
    "T48n2016_076:0838c24_6": "菩薩摩訶薩。",
    "T48n2016_076:0838c24_7": "有十種習氣。",
    "T48n2016_076:0838c24_8": "何等為十。",
    "T48n2016_076:0838c25_9": "所謂菩提心習氣。",
    "T48n2016_076:0838c25_10": "善根習氣。",
    "T48n2016_076:0838c25_11": "教化眾生習氣。",
    "T48n2016_076:0838c26_12": "見佛習氣。",
    "T48n2016_076:0838c26_13": "於清淨世界受生習氣。",
    "T48n2016_076:0838c26_14": "行習氣。",
    "T48n2016_076:0838c27_15": "願習氣。",
    "T48n2016_076:0838c27_16": "波羅蜜習氣。",
    "T48n2016_076:0838c27_17": "思惟平等法習氣。",
    "T48n2016_076:0838c27_18": "種種境界差別習氣。",
    "T48n2016_076:0838c28_19": "是為十。",
    "T48n2016_076:0838c28_20": "若諸菩薩安住此法。",
    "T48n2016_076:0838c29_21": "則永離一切煩惱習氣。",
    "T48n2016_076:0838c29_22": "得如來大智習氣。",
    "T48n2016_076:0839a01_0": "非習氣智。",
    "T48n2016_076:0839a01_1": "故知染淨二業。",
    "T48n2016_076:0839a01_2": "昇沈兩門。",
    "T48n2016_076:0839a01_3": "皆從熏習而生。",
    "T48n2016_076:0839a02_4": "不是無因而得。",
    "T48n2016_076:0839a02_5": "應須勤修白業。",
    "T48n2016_076:0839a02_6": "淨法時熏。",
    "T48n2016_076:0839a03_7": "念念功夫。",
    "T48n2016_076:0839a03_8": "自成妙果。",
    "T48n2016_076:0839a03_9": "所以一一眾生八識藏中。",
    "T48n2016_076:0839a04_10": "各具十法界種子。",
    "T48n2016_076:0839a04_11": "本自具足。",
    "T48n2016_076:0839a04_12": "非從新生。",
    "T48n2016_076:0839a05_13": "雖常內熏。",
    "T48n2016_076:0839a05_14": "須假外緣熏發。",
    "T48n2016_076:0839a05_15": "若聞十惡。",
    "T48n2016_076:0839a05_16": "熏發三塗種子。",
    "T48n2016_076:0839a06_17": "若聞戒善。",
    "T48n2016_076:0839a06_18": "熏發人天種子。",
    "T48n2016_076:0839a06_19": "若聞諦緣。",
    "T48n2016_076:0839a07_20": "熏發二乘種子。",
    "T48n2016_076:0839a07_21": "若聞六度。",
    "T48n2016_076:0839a07_22": "熏發菩薩種子。",
    "T48n2016_076:0839a08_0": "若聞一乘。",
    "T48n2016_076:0839a08_1": "熏發諸佛種子。",
    "T48n2016_076:0839a08_2": "各隨習熟濃厚處先發。",
    "T48n2016_076:0839a09_3": "如今多習三塗種子。",
    "T48n2016_076:0839a09_4": "人天尚少。",
    "T48n2016_076:0839a09_5": "豈況佛乘。",
    "T48n2016_076:0839a10_0": "然地獄界現行時。",
    "T48n2016_076:0839a10_1": "佛種子亦不沒。",
    "T48n2016_076:0839a10_2": "只是轉更賒遠。",
    "T48n2016_076:0839a11_3": "如今既在人天。",
    "T48n2016_076:0839a11_4": "直須努力。",
    "T48n2016_076:0839a11_5": "常親知識。",
    "T48n2016_076:0839a11_6": "樂聽一乘。",
    "T48n2016_076:0839a12_7": "內外資熏。",
    "T48n2016_076:0839a12_8": "一生取辦。",
    "T48n2016_076:0839a12_9": "故佛誡羅睺羅頌云。",
    "T48n2016_076:0839a13_10": "十方無量諸眾生。",
    "T48n2016_076:0839a13_11": "念念已證善逝果。",
    "T48n2016_076:0839a13_12": "彼既丈夫我亦爾。",
    "T48n2016_076:0839a14_13": "何得自輕而退屈。",
    "T48n2016_076:0839a14_14": "問。",
    "T48n2016_076:0839a14_15": "生死涅槃。",
    "T48n2016_076:0839a15_16": "苦樂報應。",
    "T48n2016_076:0839a15_17": "以何為因。",
    "T48n2016_076:0839a15_18": "答。",
    "T48n2016_076:0839a15_19": "如來藏為因。",
    "T48n2016_076:0839a16_0": "問。",
    "T48n2016_076:0839a16_1": "如來藏是無漏常住。",
    "T48n2016_076:0839a16_2": "非剎那生滅之法。",
    "T48n2016_076:0839a16_3": "云何與生滅為因。",
    "T48n2016_076:0839a17_4": "答。",
    "T48n2016_076:0839a17_5": "一切異生。",
    "T48n2016_076:0839a17_6": "因覺故迷。",
    "T48n2016_076:0839a17_7": "迷無自體。",
    "T48n2016_076:0839a18_8": "楞伽經云。",
    "T48n2016_076:0839a18_9": "佛言。",
    "T48n2016_076:0839a18_10": "大慧。",
    "T48n2016_076:0839a18_11": "七識不流轉。",
    "T48n2016_076:0839a19_0": "不受苦樂。",
    "T48n2016_076:0839a19_1": "非涅槃因。",
    "T48n2016_076:0839a19_2": "大慧。",
    "T48n2016_076:0839a19_3": "如來藏者。",
    "T48n2016_076:0839a19_4": "受苦樂與因俱。",
    "T48n2016_076:0839a20_5": "若生若滅。",
    "T48n2016_076:0839a20_6": "古釋云。",
    "T48n2016_076:0839a20_7": "七識念念生滅。",
    "T48n2016_076:0839a20_8": "不能往來六道。",
    "T48n2016_076:0839a21_9": "故名不流轉。",
    "T48n2016_076:0839a21_10": "以念念滅故。",
    "T48n2016_076:0839a21_11": "不知苦樂。",
    "T48n2016_076:0839a22_12": "不與涅槃為因。",
    "T48n2016_076:0839a22_13": "又七識從緣。",
    "T48n2016_076:0839a22_14": "本無自性。",
    "T48n2016_076:0839a23_0": "尚不能為生死苦樂之本。",
    "T48n2016_076:0839a23_1": "豈復與涅槃作因。",
    "T48n2016_076:0839a24_0": "明如來藏。",
    "T48n2016_076:0839a24_1": "常令諸識知苦樂。",
    "T48n2016_076:0839a24_2": "七識若無如來藏。",
    "T48n2016_076:0839a25_3": "自體念念滅。",
    "T48n2016_076:0839a25_4": "不知苦樂。",
    "T48n2016_076:0839a25_5": "依如來藏。",
    "T48n2016_076:0839a25_6": "故知苦樂。",
    "T48n2016_076:0839a26_7": "名如來藏受苦樂。",
    "T48n2016_076:0839a26_8": "如來藏體。",
    "T48n2016_076:0839a26_9": "不受苦樂也。",
    "T48n2016_076:0839a27_10": "言與因俱者。",
    "T48n2016_076:0839a27_11": "如來藏與七識。",
    "T48n2016_076:0839a27_12": "生死苦樂因俱。",
    "T48n2016_076:0839a28_13": "念念生滅也。",
    "T48n2016_076:0839a28_14": "又云。",
    "T48n2016_076:0839a28_15": "七識念念生滅無常。",
    "T48n2016_076:0839a28_16": "當起即謝。",
    "T48n2016_076:0839a29_17": "如何流轉。",
    "T48n2016_076:0839a29_18": "自體無成。",
    "T48n2016_076:0839a29_19": "故不受苦樂。",
    "T48n2016_076:0839a29_20": "既非染依。",
    "T48n2016_076:0839b01_21": "亦非無漏涅槃依矣。",
    "T48n2016_076:0839b01_22": "其如來藏。",
    "T48n2016_076:0839b01_23": "真常普遍。",
    "T48n2016_076:0839b02_24": "而在六道。",
    "T48n2016_076:0839b02_25": "迷此能令隨緣成事。",
    "T48n2016_076:0839b02_26": "受苦樂果。",
    "T48n2016_076:0839b03_27": "與七識俱。",
    "T48n2016_076:0839b03_28": "名與因俱。",
    "T48n2016_076:0839b03_29": "不守自性而成故。",
    "T48n2016_076:0839b03_30": "七識依此而得生滅。",
    "T48n2016_076:0839b04_31": "云若生若滅。",
    "T48n2016_076:0839b04_32": "此明如來藏即是真如隨緣。",
    "T48n2016_076:0839b05_33": "故受苦樂等。",
    "T48n2016_076:0839b05_34": "又釋云。",
    "T48n2016_076:0839b05_35": "以本害末令末空故。",
    "T48n2016_076:0839b06_36": "無可流轉。",
    "T48n2016_076:0839b06_37": "唯如來藏受苦樂者。",
    "T48n2016_076:0839b07_0": "末害本故。",
    "T48n2016_076:0839b07_1": "不守自性。",
    "T48n2016_076:0839b07_2": "清淨之體。",
    "T48n2016_076:0839b07_3": "隨緣成有。",
    "T48n2016_076:0839b07_4": "若相順。",
    "T48n2016_076:0839b08_5": "則如水乳之和。",
    "T48n2016_076:0839b08_6": "常恒共器。",
    "T48n2016_076:0839b08_7": "若相背。",
    "T48n2016_076:0839b08_8": "則如父母之讎。",
    "T48n2016_076:0839b09_9": "不與同天。",
    "T48n2016_076:0839b09_10": "又存上有不存之義。",
    "T48n2016_076:0839b09_11": "泯上有不泯之義。",
    "T48n2016_076:0839b10_12": "若唯泯無不泯。",
    "T48n2016_076:0839b10_13": "則色空俱亡。",
    "T48n2016_076:0839b11_14": "無可。",
    "T48n2016_076:0839b11_15": "相即。",
    "T48n2016_076:0839b11_16": "以不泯故。",
    "T48n2016_076:0839b11_17": "雖相即而色空。",
    "T48n2016_076:0839b11_18": "歷然。",
    "T48n2016_076:0839b12_0": "若唯存無。",
    "T48n2016_076:0839b12_1": "不存。",
    "T48n2016_076:0839b12_2": "則色空各有定性。",
    "T48n2016_076:0839b12_3": "不得。",
    "T48n2016_076:0839b12_4": "相即。",
    "T48n2016_076:0839b13_0": "由有不存故。",
    "T48n2016_076:0839b13_1": "雖歷然而得相即。",
    "T48n2016_076:0839b13_2": "如起信真如生滅二門無礙。",
    "T48n2016_076:0839b14_3": "唯是一心者。",
    "T48n2016_076:0839b14_4": "結歸起信。",
    "T48n2016_076:0839b14_5": "依一心法立二種門。",
    "T48n2016_076:0839b15_6": "故須具足二義。",
    "T48n2016_076:0839b15_7": "方名具分唯識。",
    "T48n2016_076:0839b16_8": "問。",
    "T48n2016_076:0839b16_9": "唯識第九亦說其所轉依有其二種。",
    "T48n2016_076:0839b17_0": "一持種依。",
    "T48n2016_076:0839b17_1": "謂第八識。",
    "T48n2016_076:0839b17_2": "二迷悟依。",
    "T48n2016_076:0839b17_3": "謂即真如。",
    "T48n2016_076:0839b17_4": "何以說言。",
    "T48n2016_076:0839b18_5": "然依生滅八識。",
    "T48n2016_076:0839b18_6": "唯有心境依持。",
    "T48n2016_076:0839b18_7": "答。",
    "T48n2016_076:0839b19_0": "彼雖說迷悟依。",
    "T48n2016_076:0839b19_1": "非即心境持種。",
    "T48n2016_076:0839b19_2": "以真如不變。",
    "T48n2016_076:0839b20_0": "不隨於心變萬境故。",
    "T48n2016_076:0839b20_1": "但是所迷耳。",
    "T48n2016_076:0839b20_2": "後還淨時。",
    "T48n2016_076:0839b21_0": "非是攝相即真如故。",
    "T48n2016_076:0839b21_1": "但是所悟耳。",
    "T48n2016_076:0839b21_2": "今乃心境依持。",
    "T48n2016_076:0839b22_3": "即是真妄。",
    "T48n2016_076:0839b22_4": "非有二體。",
    "T48n2016_076:0839b22_5": "故說一心。",
    "T48n2016_076:0839b22_6": "約義不同。",
    "T48n2016_076:0839b23_7": "分成兩義。",
    "T48n2016_076:0839b23_8": "說二門別。",
    "T48n2016_076:0839b23_9": "故論云。",
    "T48n2016_076:0839b23_10": "然此二門。",
    "T48n2016_076:0839b24_0": "皆。",
    "T48n2016_076:0839b24_1": "各總攝一切法。",
    "T48n2016_076:0839b24_2": "以此二門不相離故。",
    "T48n2016_076:0839b24_3": "所以楞嚴經云。",
    "T48n2016_076:0839b25_4": "生滅去來。",
    "T48n2016_076:0839b25_5": "本如來藏。",
    "T48n2016_076:0839b25_6": "如今世人。",
    "T48n2016_076:0839b25_7": "只信有生滅。",
    "T48n2016_076:0839b26_8": "不信有如來藏。",
    "T48n2016_076:0839b26_9": "不知生死有名無體。",
    "T48n2016_076:0839b27_10": "如來藏有名有體。",
    "T48n2016_076:0839b27_11": "只可從實。",
    "T48n2016_076:0839b27_12": "不可憑虛。",
    "T48n2016_076:0839b27_13": "憑虛則妄執所宜。",
    "T48n2016_076:0839b28_14": "從實則佛。",
    "T48n2016_076:0839b28_15": "所印可。",
    "T48n2016_076:0839b28_16": "問。",
    "T48n2016_076:0839b28_17": "夫論心含教法。",
    "T48n2016_076:0839b29_18": "如何是一心四諦法門。",
    "T48n2016_076:0839b29_19": "答。",
    "T48n2016_076:0839b29_20": "四諦法門。",
    "T48n2016_076:0839c01_21": "橫該竪徹。",
    "T48n2016_076:0839c01_22": "法無不備。",
    "T48n2016_076:0839c01_23": "教無不窮。",
    "T48n2016_076:0839c01_24": "今約台教。",
    "T48n2016_076:0839c02_25": "一心具無作四諦者。",
    "T48n2016_076:0839c02_26": "一念心中具十界苦。",
    "T48n2016_076:0839c03_0": "名為苦諦。",
    "T48n2016_076:0839c03_1": "具十界惑。",
    "T48n2016_076:0839c03_2": "名為集諦。",
    "T48n2016_076:0839c03_3": "苦即涅槃。",
    "T48n2016_076:0839c03_4": "名為滅諦。",
    "T48n2016_076:0839c04_5": "惑即菩提。",
    "T48n2016_076:0839c04_6": "名為道諦。",
    "T48n2016_076:0839c04_7": "此唯論一心四諦。",
    "T48n2016_076:0839c05_8": "又四教四種四諦。",
    "T48n2016_076:0839c05_9": "藏教生滅四諦。",
    "T48n2016_076:0839c05_10": "通教無生四諦。",
    "T48n2016_076:0839c06_11": "別教無量四諦。",
    "T48n2016_076:0839c06_12": "圓教無作四諦。",
    "T48n2016_076:0839c06_13": "今但論圓教無作四諦。",
    "T48n2016_076:0839c07_14": "止觀云。",
    "T48n2016_076:0839c07_15": "法性與一切法。",
    "T48n2016_076:0839c07_16": "無二無別。",
    "T48n2016_076:0839c08_17": "凡法尚是。",
    "T48n2016_076:0839c08_18": "況二乘乎。",
    "T48n2016_076:0839c08_19": "離凡法更求實相。",
    "T48n2016_076:0839c09_20": "如避此空。",
    "T48n2016_076:0839c09_21": "彼處求空。",
    "T48n2016_076:0839c09_22": "即凡法是實法。",
    "T48n2016_076:0839c09_23": "不須捨凡向聖。",
    "T48n2016_076:0839c10_24": "經言。",
    "T48n2016_076:0839c10_25": "生死即涅槃。",
    "T48n2016_076:0839c10_26": "一色一香。",
    "T48n2016_076:0839c10_27": "皆是中道。",
    "T48n2016_076:0839c11_28": "即無作四諦。",
    "T48n2016_076:0839c11_29": "又玄義云。",
    "T48n2016_076:0839c11_30": "以迷理故。",
    "T48n2016_076:0839c12_0": "菩提是煩惱。",
    "T48n2016_076:0839c12_1": "名集諦。",
    "T48n2016_076:0839c12_2": "涅槃是生死。",
    "T48n2016_076:0839c12_3": "名苦諦。",
    "T48n2016_076:0839c13_0": "以能解故。",
    "T48n2016_076:0839c13_1": "煩惱即菩提。",
    "T48n2016_076:0839c13_2": "名道諦。",
    "T48n2016_076:0839c13_3": "生死即涅槃。",
    "T48n2016_076:0839c14_0": "名滅諦。",
    "T48n2016_076:0839c14_1": "即事而中。",
    "T48n2016_076:0839c14_2": "無思無念。",
    "T48n2016_076:0839c14_3": "無誰造作。",
    "T48n2016_076:0839c14_4": "故名無作。",
    "T48n2016_076:0839c15_5": "亦名一實諦。",
    "T48n2016_076:0839c15_6": "一實諦者。",
    "T48n2016_076:0839c15_7": "無虛妄。",
    "T48n2016_076:0839c15_8": "無顛倒。",
    "T48n2016_076:0839c16_0": "常樂我淨等。",
    "T48n2016_076:0839c16_1": "是故名為無作四聖諦。",
    "T48n2016_076:0839c16_2": "法華經偈云。",
    "T48n2016_076:0839c17_3": "更以異方便。",
    "T48n2016_076:0839c17_4": "助顯第一義。",
    "T48n2016_076:0839c17_5": "又云。",
    "T48n2016_076:0839c17_6": "唯此一事實。",
    "T48n2016_076:0839c18_7": "即是無作一實諦也。",
    "T48n2016_076:0839c18_8": "以真如之性。",
    "T48n2016_076:0839c18_9": "是自心之實。",
    "T48n2016_076:0839c19_10": "名一實諦。",
    "T48n2016_076:0839c19_11": "念念圓成。",
    "T48n2016_076:0839c19_12": "更何所作。",
    "T48n2016_076:0839c19_13": "名無作四諦。",
    "T48n2016_076:0839c20_14": "所以八千聲聞。",
    "T48n2016_076:0839c20_15": "於法華會上見如來性。",
    "T48n2016_076:0839c21_16": "如秋收冬藏。",
    "T48n2016_076:0839c21_17": "更無所作。",
    "T48n2016_076:0839c21_18": "以達本故。",
    "T48n2016_076:0839c21_19": "法爾如斯。",
    "T48n2016_076:0839c22_20": "若未見性人。",
    "T48n2016_076:0839c22_21": "不可安然。",
    "T48n2016_076:0839c22_22": "拱手傚無作無修。",
    "T48n2016_076:0839c23_0": "直須水到渠成。",
    "T48n2016_076:0839c23_1": "自然任運。",
    "T48n2016_076:0839c23_2": "故又但了一心。",
    "T48n2016_076:0839c23_3": "自然無作。",
    "T48n2016_076:0839c24_4": "非是強為。",
    "T48n2016_076:0839c24_5": "故云陰入皆如。",
    "T48n2016_076:0839c24_6": "無苦可捨。",
    "T48n2016_076:0839c25_0": "無明塵勞即是菩提。",
    "T48n2016_076:0839c25_1": "無集可斷。",
    "T48n2016_076:0839c25_2": "邊邪皆中正。",
    "T48n2016_076:0839c26_0": "無道可修。",
    "T48n2016_076:0839c26_1": "生死即涅槃。",
    "T48n2016_076:0839c26_2": "無滅可證。",
    "T48n2016_076:0839c26_3": "無苦無集。",
    "T48n2016_076:0839c27_0": "故無世間。",
    "T48n2016_076:0839c27_1": "無道無滅。",
    "T48n2016_076:0839c27_2": "故無出世間。",
    "T48n2016_076:0839c27_3": "純一實相。",
    "T48n2016_076:0839c28_4": "實相外更無別法。",
    "T48n2016_076:0839c28_5": "又文殊道行經云。",
    "T48n2016_076:0839c28_6": "佛告文殊師利。",
    "T48n2016_076:0839c29_7": "若見一切諸法無起。",
    "T48n2016_076:0839c29_8": "即解苦諦。",
    "T48n2016_076:0840a01_0": "若見一切諸法無住。",
    "T48n2016_076:0840a01_1": "即能斷集。",
    "T48n2016_076:0840a01_2": "若見一切諸法畢竟涅槃。",
    "T48n2016_076:0840a02_3": "即能證滅。",
    "T48n2016_076:0840a02_4": "文殊師利。",
    "T48n2016_076:0840a02_5": "若見一切諸無自體。",
    "T48n2016_076:0840a03_6": "即是修道。",
    "T48n2016_076:0840a04_0": "宗鏡錄卷第七十六"
}