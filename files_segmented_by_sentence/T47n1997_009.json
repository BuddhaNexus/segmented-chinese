{
    "T47n1997_009:0751c03_0": "圓悟佛果禪師語錄卷第九",
    "T47n1997_009:0751c05_0": "宋平江府虎丘山門人紹隆等編",
    "T47n1997_009:0751c06_0": "小參二",
    "T47n1997_009:0751c07_0": "夾山寺入院小參。",
    "T47n1997_009:0751c07_1": "師云。",
    "T47n1997_009:0751c07_2": "收光攝彩信天真。",
    "T47n1997_009:0751c07_3": "事事圓成物物新。",
    "T47n1997_009:0751c08_4": "內既無心外無相。",
    "T47n1997_009:0751c08_5": "更於何處覓通津。",
    "T47n1997_009:0751c09_6": "還有透得趙州關底麼。",
    "T47n1997_009:0751c09_7": "試出眾相。",
    "T47n1997_009:0751c09_8": "見問承師有言逶得趙州關。",
    "T47n1997_009:0751c10_9": "如何是夾山關。",
    "T47n1997_009:0751c10_10": "師云。",
    "T47n1997_009:0751c11_11": "退身三百步。",
    "T47n1997_009:0751c11_12": "進云。",
    "T47n1997_009:0751c11_13": "恁麼則九天雲靜鶴飛高。",
    "T47n1997_009:0751c12_14": "師云。",
    "T47n1997_009:0751c12_15": "豈干闍黎事。",
    "T47n1997_009:0751c12_16": "進云。",
    "T47n1997_009:0751c12_17": "共相證據也何妨。",
    "T47n1997_009:0751c13_0": "師云。",
    "T47n1997_009:0751c13_1": "持聾作啞。",
    "T47n1997_009:0751c13_2": "師乃云。",
    "T47n1997_009:0751c13_3": "牛頭沒馬頭回。",
    "T47n1997_009:0751c13_4": "全彰照用。",
    "T47n1997_009:0751c14_5": "金烏急玉兔速。",
    "T47n1997_009:0751c14_6": "略露權衡。",
    "T47n1997_009:0751c14_7": "透得過底。",
    "T47n1997_009:0751c14_8": "似虎靠山如龍得水。",
    "T47n1997_009:0751c15_9": "透不過底。",
    "T47n1997_009:0751c15_10": "聞恁麼道。",
    "T47n1997_009:0751c15_11": "似鴨聽雷鳴。",
    "T47n1997_009:0751c16_12": "蓋未諳悉元由一向情存知解。",
    "T47n1997_009:0751c16_13": "山僧今夜向作家面前。",
    "T47n1997_009:0751c17_14": "不惜眉毛放行去也。",
    "T47n1997_009:0751c17_15": "但能上無攀仰下絕己躬。",
    "T47n1997_009:0751c18_16": "外不見大地山河內不立聞見覺知。",
    "T47n1997_009:0751c19_17": "直下擺脫情識一念不生。",
    "T47n1997_009:0751c19_18": "證本地風光。",
    "T47n1997_009:0751c20_19": "見本來面目。",
    "T47n1997_009:0751c20_20": "然後山是山水是水。",
    "T47n1997_009:0751c20_21": "僧是僧俗是俗。",
    "T47n1997_009:0751c21_22": "雖然莫錯認定盤星。",
    "T47n1997_009:0751c21_23": "更須知有解黏去縛向上機關始得。",
    "T47n1997_009:0751c22_24": "且道作麼生是向上事。",
    "T47n1997_009:0751c23_25": "鵰弓已掛狼煙息。",
    "T47n1997_009:0751c23_26": "萬里歌謠賀太平。",
    "T47n1997_009:0751c24_0": "結夏小參。",
    "T47n1997_009:0751c24_1": "師云。",
    "T47n1997_009:0751c24_2": "大眾。",
    "T47n1997_009:0751c24_3": "見成公案觸處圓成。",
    "T47n1997_009:0751c24_4": "雖然老病躘鐘。",
    "T47n1997_009:0751c25_5": "尚可門旗展陣。",
    "T47n1997_009:0751c25_6": "還有匹馬單鎗久戰沙場底麼。",
    "T47n1997_009:0751c26_7": "出來相共證據。",
    "T47n1997_009:0751c26_8": "僧問。",
    "T47n1997_009:0751c26_9": "九旬禁足三月護生。",
    "T47n1997_009:0751c27_10": "只如華猫取斷南泉分身兩段。",
    "T47n1997_009:0751c28_0": "斑蛇適會赤眼就地一鋤。",
    "T47n1997_009:0751c28_1": "未審是持是犯。",
    "T47n1997_009:0751c28_2": "師云。",
    "T47n1997_009:0751c29_3": "破戒也不知。",
    "T47n1997_009:0751c29_4": "進云。",
    "T47n1997_009:0751c29_5": "大用不拘今古楷模。",
    "T47n1997_009:0751c29_6": "師云。",
    "T47n1997_009:0752a01_7": "依舊分身兩段。",
    "T47n1997_009:0752a01_8": "進云。",
    "T47n1997_009:0752a01_9": "若然者。",
    "T47n1997_009:0752a01_10": "玉筯撑開虎眼睛。",
    "T47n1997_009:0752a02_11": "金鞭擊斷那吒臂。",
    "T47n1997_009:0752a02_12": "師云。",
    "T47n1997_009:0752a02_13": "爾向什麼處見南泉歸宗。",
    "T47n1997_009:0752a03_14": "進云。",
    "T47n1997_009:0752a03_15": "只在目前。",
    "T47n1997_009:0752a03_16": "師云。",
    "T47n1997_009:0752a03_17": "重言不當吃。",
    "T47n1997_009:0752a04_18": "問西天以蠟人為驗。",
    "T47n1997_009:0752a04_19": "未審此間以何為驗。",
    "T47n1997_009:0752a05_0": "師云。",
    "T47n1997_009:0752a05_1": "以眉毛為驗。",
    "T47n1997_009:0752a05_2": "進云。",
    "T47n1997_009:0752a05_3": "還許學人出得麼。",
    "T47n1997_009:0752a05_4": "師云。",
    "T47n1997_009:0752a06_5": "更眨上看。",
    "T47n1997_009:0752a06_6": "進云。",
    "T47n1997_009:0752a06_7": "只恐覷不著。",
    "T47n1997_009:0752a06_8": "師云。",
    "T47n1997_009:0752a06_9": "短底短長底長。",
    "T47n1997_009:0752a07_10": "有什麼覷不著。",
    "T47n1997_009:0752a07_11": "師乃云。",
    "T47n1997_009:0752a07_12": "全提單拈斬釘截鐵。",
    "T47n1997_009:0752a08_13": "呵佛罵祖大用大機。",
    "T47n1997_009:0752a08_14": "猶未稱衲僧本分事。",
    "T47n1997_009:0752a09_15": "何況立問立答立賓立主。",
    "T47n1997_009:0752a09_16": "涉語涉言說玄說妙。",
    "T47n1997_009:0752a10_17": "無事生事平地上起波瀾。",
    "T47n1997_009:0752a10_18": "雖然如是。",
    "T47n1997_009:0752a11_19": "事無一向理出多途。",
    "T47n1997_009:0752a11_20": "雖然看風使帆。",
    "T47n1997_009:0752a11_21": "不免相席打令。",
    "T47n1997_009:0752a12_22": "豈不見古人道。",
    "T47n1997_009:0752a12_23": "欲識佛性義。",
    "T47n1997_009:0752a12_24": "當觀時節因緣。",
    "T47n1997_009:0752a13_25": "時節若至其理自彰。",
    "T47n1997_009:0752a13_26": "只如今夜與明朝。",
    "T47n1997_009:0752a14_27": "乃是二千年前釋迦老子立起模範。",
    "T47n1997_009:0752a14_28": "九旬禁足三月護生時節。",
    "T47n1997_009:0752a15_29": "天下叢林悉皆依稟。",
    "T47n1997_009:0752a16_0": "既是此箇時節到來。",
    "T47n1997_009:0752a16_1": "還有識得此理底麼。",
    "T47n1997_009:0752a16_2": "若識得此理去。",
    "T47n1997_009:0752a17_3": "隨處作主遇緣即宗。",
    "T47n1997_009:0752a17_4": "二六時中無內無外無得無失。",
    "T47n1997_009:0752a18_5": "全體恁麼。",
    "T47n1997_009:0752a18_6": "亦無生可護。",
    "T47n1997_009:0752a19_0": "亦無蠟人可持。",
    "T47n1997_009:0752a19_1": "其或未然。",
    "T47n1997_009:0752a19_2": "應憐鵝護雪。",
    "T47n1997_009:0752a19_3": "直使蠟人氷。",
    "T47n1997_009:0752a20_4": "師復云。",
    "T47n1997_009:0752a20_5": "大眾釋迦老子道。",
    "T47n1997_009:0752a20_6": "以大圓覺為我伽藍。",
    "T47n1997_009:0752a21_7": "身心安居平等性智。",
    "T47n1997_009:0752a21_8": "諸人既欲安居。",
    "T47n1997_009:0752a22_9": "還識得平等性智麼。",
    "T47n1997_009:0752a22_10": "若識得去。",
    "T47n1997_009:0752a22_11": "人人具足箇箇圓成。",
    "T47n1997_009:0752a23_12": "乃至動靜施為悉皆在大伽藍中。",
    "T47n1997_009:0752a24_0": "與他諸聖把手共。",
    "T47n1997_009:0752a24_1": "行與他諸聖同作佛。",
    "T47n1997_009:0752a24_2": "事且作麼生識得。",
    "T47n1997_009:0752a25_3": "去三條椽下七尺單。",
    "T47n1997_009:0752a25_4": "前各宜照管久立。",
    "T47n1997_009:0752a27_0": "結制小參。",
    "T47n1997_009:0752a27_1": "僧問。",
    "T47n1997_009:0752a27_2": "護生須是殺。",
    "T47n1997_009:0752a27_3": "殺盡始安居。",
    "T47n1997_009:0752a27_4": "未審殺箇什麼。",
    "T47n1997_009:0752a28_5": "師云。",
    "T47n1997_009:0752a28_6": "大有人疑著。",
    "T47n1997_009:0752a28_7": "進云。",
    "T47n1997_009:0752a28_8": "學人到這裏直得步步絕行蹤時如何。",
    "T47n1997_009:0752a29_9": "師云。",
    "T47n1997_009:0752a29_10": "未有金剛王寶劍在。",
    "T47n1997_009:0752b01_11": "進云。",
    "T47n1997_009:0752b01_12": "斬釘截鐵本分宗師。",
    "T47n1997_009:0752b01_13": "眹兆未分請師速道。",
    "T47n1997_009:0752b02_14": "師云。",
    "T47n1997_009:0752b02_15": "咭嘹舌頭三千里。",
    "T47n1997_009:0752b02_16": "進云。",
    "T47n1997_009:0752b03_17": "恩深轉無語。",
    "T47n1997_009:0752b03_18": "懷抱自分明。",
    "T47n1997_009:0752b03_19": "師云。",
    "T47n1997_009:0752b03_20": "且莫詐明頭。",
    "T47n1997_009:0752b04_21": "問一大藏教是拭不淨紙。",
    "T47n1997_009:0752b04_22": "只如德山為什麼擔疏鈔行脚。",
    "T47n1997_009:0752b05_23": "師云。",
    "T47n1997_009:0752b05_24": "放下著。",
    "T47n1997_009:0752b05_25": "進云。",
    "T47n1997_009:0752b05_26": "周金剛被婆子一問。",
    "T47n1997_009:0752b06_27": "直得亡鋒結舌又作麼生。",
    "T47n1997_009:0752b06_28": "師云。",
    "T47n1997_009:0752b06_29": "腦後拔箭。",
    "T47n1997_009:0752b07_30": "師乃云。",
    "T47n1997_009:0752b07_31": "絕彼我混虛空。",
    "T47n1997_009:0752b07_32": "透聲色無面目。",
    "T47n1997_009:0752b08_33": "終日喫飯。",
    "T47n1997_009:0752b08_34": "不曾嚼一粒米。",
    "T47n1997_009:0752b08_35": "終日著衣。",
    "T47n1997_009:0752b08_36": "未嘗掛一縷絲。",
    "T47n1997_009:0752b09_37": "總虛空華藏剎海。",
    "T47n1997_009:0752b09_38": "列向下風過現未來。",
    "T47n1997_009:0752b10_39": "諸聖倒退千里。",
    "T47n1997_009:0752b10_40": "舉一步越不可說世界。",
    "T47n1997_009:0752b11_0": "向香水海那邊。",
    "T47n1997_009:0752b11_1": "猶有去處。",
    "T47n1997_009:0752b11_2": "拈一塵混一切無量無數十方上下。",
    "T47n1997_009:0752b12_3": "一切諸佛祖師七穿八穴。",
    "T47n1997_009:0752b13_0": "猶有餘地。",
    "T47n1997_009:0752b13_1": "且道此人向什麼處安居。",
    "T47n1997_009:0752b13_2": "向什麼處禁足。",
    "T47n1997_009:0752b14_3": "若知此人落處。",
    "T47n1997_009:0752b14_4": "始知本地風光。",
    "T47n1997_009:0752b14_5": "始見本來面目。",
    "T47n1997_009:0752b15_6": "便能攝順逆於一塵中。",
    "T47n1997_009:0752b15_7": "規行矩步。",
    "T47n1997_009:0752b16_0": "現威儀於一念頃。",
    "T47n1997_009:0752b16_1": "不越常程。",
    "T47n1997_009:0752b16_2": "至於以大圓覺為我伽藍。",
    "T47n1997_009:0752b17_3": "猶是小段在。",
    "T47n1997_009:0752b17_4": "若能恁麼見恁麼用。",
    "T47n1997_009:0752b18_0": "恁麼信恁麼透。",
    "T47n1997_009:0752b18_1": "管取無邊剎海。",
    "T47n1997_009:0752b18_2": "自他不隔於毫端。",
    "T47n1997_009:0752b19_3": "十世古今始終不移於當念。",
    "T47n1997_009:0752b19_4": "九旬禁足三月護生。",
    "T47n1997_009:0752b20_5": "於一念一步一塵一芥中。",
    "T47n1997_009:0752b20_6": "見成受用。",
    "T47n1997_009:0752b21_7": "且道。",
    "T47n1997_009:0752b21_8": "此人畢竟在什麼處。",
    "T47n1997_009:0752b21_9": "還委悉麼。",
    "T47n1997_009:0752b21_10": "披蓑側立千峯外。",
    "T47n1997_009:0752b22_11": "引水澆蔬五老前。",
    "T47n1997_009:0752b23_0": "解制小參。",
    "T47n1997_009:0752b23_1": "師云。",
    "T47n1997_009:0752b23_2": "收因結果慎末護初。",
    "T47n1997_009:0752b23_3": "一段因緣此時周備。",
    "T47n1997_009:0752b24_4": "聖賢窠窟生死根株。",
    "T47n1997_009:0752b24_5": "一鎚擊碎一刀截斷。",
    "T47n1997_009:0752b25_6": "若是通方作者。",
    "T47n1997_009:0752b25_7": "舉著知歸。",
    "T47n1997_009:0752b25_8": "後進初機。",
    "T47n1997_009:0752b26_9": "如何湊泊。",
    "T47n1997_009:0752b26_10": "秖如生佛未分。",
    "T47n1997_009:0752b26_11": "空劫已前威音王那邊。",
    "T47n1997_009:0752b27_12": "還有結制解制也無。",
    "T47n1997_009:0752b27_13": "雖然到這裏。",
    "T47n1997_009:0752b27_14": "直饒千聖出頭來。",
    "T47n1997_009:0752b28_15": "也須目瞪口呿。",
    "T47n1997_009:0752b28_16": "那邊即且致。",
    "T47n1997_009:0752b29_0": "只如今燈燭交光坐立儼然。",
    "T47n1997_009:0752b29_1": "高者是天厚者是地。",
    "T47n1997_009:0752c01_2": "山是山水是水。",
    "T47n1997_009:0752c01_3": "有是有無是無。",
    "T47n1997_009:0752c01_4": "長是長短是短。",
    "T47n1997_009:0752c02_5": "正當恁麼時。",
    "T47n1997_009:0752c02_6": "與威音王己前空劫那畔。",
    "T47n1997_009:0752c03_7": "是同是別。",
    "T47n1997_009:0752c03_8": "若向箇裏倜儻分明。",
    "T47n1997_009:0752c03_9": "目前無法。",
    "T47n1997_009:0752c04_0": "胸中無心。",
    "T47n1997_009:0752c04_1": "上不見諸聖下。",
    "T47n1997_009:0752c04_2": "不見凡夫。",
    "T47n1997_009:0752c04_3": "外不見一切境界。",
    "T47n1997_009:0752c05_4": "內不見眼耳鼻舌身意。",
    "T47n1997_009:0752c05_5": "便能通同一切。",
    "T47n1997_009:0752c06_6": "說什麼結制解制。",
    "T47n1997_009:0752c06_7": "一鎚擊碎聖賢窠窟。",
    "T47n1997_009:0752c07_0": "一刀截斷生死根株。",
    "T47n1997_009:0752c07_1": "設使臨濟德山文殊普賢。",
    "T47n1997_009:0752c08_2": "乃至無量無邊具大解脫有大威神。",
    "T47n1997_009:0752c08_3": "無數河沙浩浩地來。",
    "T47n1997_009:0752c09_4": "不消一揑。",
    "T47n1997_009:0752c09_5": "且憑箇什麼。",
    "T47n1997_009:0752c09_6": "若不藍田射石虎。",
    "T47n1997_009:0752c10_7": "幾乎誤殺李將軍。",
    "T47n1997_009:0752c11_0": "郡中出隊眾請小參。",
    "T47n1997_009:0752c11_1": "師云。",
    "T47n1997_009:0752c11_2": "蘭城道友集如雲。",
    "T47n1997_009:0752c12_0": "選佛場開不二門。",
    "T47n1997_009:0752c12_1": "光飾碧巖無舌老。",
    "T47n1997_009:0752c12_2": "小參佳會四方聞。",
    "T47n1997_009:0752c13_3": "聞者爭如見底。",
    "T47n1997_009:0752c13_4": "見底爭如激揚酬唱底。",
    "T47n1997_009:0752c14_5": "還有作家禪客麼。",
    "T47n1997_009:0752c14_6": "僧問。",
    "T47n1997_009:0752c14_7": "三世諸佛只言自知。",
    "T47n1997_009:0752c15_8": "歷代祖師全提不起。",
    "T47n1997_009:0752c15_9": "一大藏教詮註不及。",
    "T47n1997_009:0752c16_10": "未審和尚如何。",
    "T47n1997_009:0752c16_11": "師云。",
    "T47n1997_009:0752c16_12": "夾山到這裏口似匾檐。",
    "T47n1997_009:0752c17_13": "進云。",
    "T47n1997_009:0752c17_14": "捉敗這老漢。",
    "T47n1997_009:0752c17_15": "師云。",
    "T47n1997_009:0752c17_16": "且喜沒交涉。",
    "T47n1997_009:0752c17_17": "進云。",
    "T47n1997_009:0752c18_18": "恁麼則天下人鼻孔。",
    "T47n1997_009:0752c18_19": "被和尚穿却了也。",
    "T47n1997_009:0752c18_20": "師云。",
    "T47n1997_009:0752c19_21": "爾且道。",
    "T47n1997_009:0752c19_22": "夾山鼻孔在什麼處。",
    "T47n1997_009:0752c19_23": "僧便喝。",
    "T47n1997_009:0752c19_24": "師云。",
    "T47n1997_009:0752c20_25": "也須穿脚。",
    "T47n1997_009:0752c20_26": "進云。",
    "T47n1997_009:0752c20_27": "明眼宗師天然有在。",
    "T47n1997_009:0752c20_28": "師云。",
    "T47n1997_009:0752c21_29": "猶是落二落三。",
    "T47n1997_009:0752c21_30": "師乃云。",
    "T47n1997_009:0752c21_31": "開佛祖鑪鞴用向上鉗鎚。",
    "T47n1997_009:0752c22_32": "擬議不來則千里萬里。",
    "T47n1997_009:0752c22_33": "當鋒薦得則坐斷要津。",
    "T47n1997_009:0752c23_34": "此猶是化門之說。",
    "T47n1997_009:0752c23_35": "若確實而論。",
    "T47n1997_009:0752c23_36": "山僧有口無說處。",
    "T47n1997_009:0752c24_37": "諸人有耳無側聆處。",
    "T47n1997_009:0752c24_38": "乃至日月未足為明。",
    "T47n1997_009:0752c25_39": "虛空未足為廣。",
    "T47n1997_009:0752c25_40": "乾坤未足為大。",
    "T47n1997_009:0752c26_0": "萬象未足為眾。",
    "T47n1997_009:0752c26_1": "到這裏一搓一捺一挨一拶。",
    "T47n1997_009:0752c27_0": "要見本分事。",
    "T47n1997_009:0752c27_1": "且問。",
    "T47n1997_009:0752c27_2": "如何是本分事。",
    "T47n1997_009:0752c27_3": "大千沙界海中漚。",
    "T47n1997_009:0752c28_4": "一切聖賢如電拂。",
    "T47n1997_009:0752c29_0": "師示眾云。",
    "T47n1997_009:0752c29_1": "舉不顧即差互。",
    "T47n1997_009:0752c29_2": "擬思量何劫悟。",
    "T47n1997_009:0752c29_3": "且道舉箇什麼。",
    "T47n1997_009:0753a01_4": "直饒解顧也是方木逗圓孔。",
    "T47n1997_009:0753a01_5": "何況更涉思量計較道理。",
    "T47n1997_009:0753a02_6": "轉沒交涉。",
    "T47n1997_009:0753a02_7": "著實而論。",
    "T47n1997_009:0753a03_0": "有什麼事。",
    "T47n1997_009:0753a03_1": "直下無一絲毫事。",
    "T47n1997_009:0753a03_2": "亦無一絲毫見聞玄妙道理得失。",
    "T47n1997_009:0753a04_3": "到這裏便是千聖出來。",
    "T47n1997_009:0753a04_4": "要舉揚也無下口處。",
    "T47n1997_009:0753a05_5": "要作用亦無動轉處。",
    "T47n1997_009:0753a05_6": "所以雲門云。",
    "T47n1997_009:0753a06_7": "向爾道。",
    "T47n1997_009:0753a06_8": "直下無事。",
    "T47n1997_009:0753a06_9": "早是相埋沒了也。",
    "T47n1997_009:0753a07_0": "且道什麼處是埋沒處。",
    "T47n1997_009:0753a07_1": "灼然能有幾人到此。",
    "T47n1997_009:0753a08_0": "此是文殊普賢大人境界。",
    "T47n1997_009:0753a08_1": "豈是尋常涉道理計校得失思量底。",
    "T47n1997_009:0753a09_2": "還知麼。",
    "T47n1997_009:0753a09_3": "須是絕情識絕玄妙。",
    "T47n1997_009:0753a10_4": "千聖只言自知。",
    "T47n1997_009:0753a10_5": "亦無窠臼照用。",
    "T47n1997_009:0753a10_6": "淨裸裸赤灑灑。",
    "T47n1997_009:0753a11_7": "巖頭道。",
    "T47n1997_009:0753a11_8": "只露目前些子如擊石火。",
    "T47n1997_009:0753a11_9": "此是向上人行履。",
    "T47n1997_009:0753a12_10": "若覷不見切不得疑著。",
    "T47n1997_009:0753a12_11": "若無恁麼事。",
    "T47n1997_009:0753a13_12": "達磨西來經六百年亦不傳至今日。",
    "T47n1997_009:0753a13_13": "為有恁麼事。",
    "T47n1997_009:0753a14_14": "至今天下列剎相望。",
    "T47n1997_009:0753a14_15": "一一真善知識踞師子座。",
    "T47n1997_009:0753a15_16": "各各為人天師。",
    "T47n1997_009:0753a15_17": "牙如利劍口似血盆。",
    "T47n1997_009:0753a16_18": "其餘有窠臼有依倚。",
    "T47n1997_009:0753a16_19": "黏皮著骨有得有失有傳授。",
    "T47n1997_009:0753a17_20": "盡打入弄泥團處去。",
    "T47n1997_009:0753a17_21": "若是石頭馬師百丈黃檗臨濟雲門玄沙巖頭法眼溈仰曹洞。",
    "T47n1997_009:0753a19_22": "此等之流。",
    "T47n1997_009:0753a19_23": "皆是向上宗師。",
    "T47n1997_009:0753a19_24": "動靜施為皆在此中行履。",
    "T47n1997_009:0753a20_25": "譬如師子捉象皆全其力。",
    "T47n1997_009:0753a20_26": "至於捉兔亦全其力。",
    "T47n1997_009:0753a21_27": "如僧問雲居弘覺。",
    "T47n1997_009:0753a21_28": "師子捉兔捉象亦全其力。",
    "T47n1997_009:0753a22_29": "未審全什麼力。",
    "T47n1997_009:0753a22_30": "雲居云。",
    "T47n1997_009:0753a22_31": "不欺之力。",
    "T47n1997_009:0753a23_32": "要須一一與他本分草料。",
    "T47n1997_009:0753a23_33": "旦那箇是本分草料。",
    "T47n1997_009:0753a24_34": "豈不見長沙道。",
    "T47n1997_009:0753a24_35": "我若一向舉揚宗教。",
    "T47n1997_009:0753a24_36": "法堂前須草深一丈。",
    "T47n1997_009:0753a25_37": "事不獲已向爾道。",
    "T47n1997_009:0753a25_38": "盡大地是般若光。",
    "T47n1997_009:0753a26_39": "光未發時無佛無眾生。",
    "T47n1997_009:0753a26_40": "消息向什麼處得來。",
    "T47n1997_009:0753a27_41": "恁麼說話。",
    "T47n1997_009:0753a27_42": "早是葛藤了也。",
    "T47n1997_009:0753a27_43": "所以尋常向兄弟道。",
    "T47n1997_009:0753a28_44": "須是打疊情塵得失計較淨盡。",
    "T47n1997_009:0753a29_0": "驀地一場汗出。",
    "T47n1997_009:0753a29_1": "自然活鱍鱍。",
    "T47n1997_009:0753a29_2": "天下人不奈何。",
    "T47n1997_009:0753b01_0": "幸有如是威風。",
    "T47n1997_009:0753b01_1": "有如是自在。",
    "T47n1997_009:0753b01_2": "若隨人脚跟轉。",
    "T47n1997_009:0753b02_0": "覓人涎唾喫。",
    "T47n1997_009:0753b02_1": "則沒交涉。",
    "T47n1997_009:0753b02_2": "且如仰山問同參道。",
    "T47n1997_009:0753b03_0": "近日見處如何。",
    "T47n1997_009:0753b03_1": "對曰。",
    "T47n1997_009:0753b03_2": "實無一法可當情。",
    "T47n1997_009:0753b03_3": "山云。",
    "T47n1997_009:0753b04_0": "師弟解猶在境。",
    "T47n1997_009:0753b04_1": "問何故。",
    "T47n1997_009:0753b04_2": "仰山云。",
    "T47n1997_009:0753b04_3": "汝豈無能知一法。",
    "T47n1997_009:0753b05_4": "可當情者。",
    "T47n1997_009:0753b05_5": "他直得無一法可當情。",
    "T47n1997_009:0753b05_6": "尚遭仰山點檢。",
    "T47n1997_009:0753b06_7": "到這裏無能所知。",
    "T47n1997_009:0753b06_8": "無一法無。",
    "T47n1997_009:0753b06_9": "無一法也須是箇人始得。",
    "T47n1997_009:0753b07_10": "所以喚作無事人。",
    "T47n1997_009:0753b07_11": "方始說本來無事。",
    "T47n1997_009:0753b08_12": "既是本來無事。",
    "T47n1997_009:0753b08_13": "只如目前萬境樅然。",
    "T47n1997_009:0753b09_14": "六凡四聖那裏得來。",
    "T47n1997_009:0753b09_15": "直須超達始得。",
    "T47n1997_009:0753b09_16": "且作麼生是超達底句。",
    "T47n1997_009:0753b10_17": "莫怪從前多意氣。",
    "T47n1997_009:0753b10_18": "他家曾踏上頭關。",
    "T47n1997_009:0753b12_0": "示眾云。",
    "T47n1997_009:0753b12_1": "大凡學道。",
    "T47n1997_009:0753b12_2": "須是用作事始得。",
    "T47n1997_009:0753b12_3": "莫只等閑。",
    "T47n1997_009:0753b13_4": "但二六時中如欠却人家二三百萬貫債負。",
    "T47n1997_009:0753b14_5": "憂怕還他不徹。",
    "T47n1997_009:0753b14_6": "如此存誠不憂不到。",
    "T47n1997_009:0753b14_7": "是故古者道。",
    "T47n1997_009:0753b15_8": "大事未辦如喪考妣。",
    "T47n1997_009:0753b15_9": "又有一喻。",
    "T47n1997_009:0753b15_10": "學道之士如鷄抱卵。",
    "T47n1997_009:0753b16_11": "須是暖氣相接方可生成。",
    "T47n1997_009:0753b16_12": "若中間間隔。",
    "T47n1997_009:0753b17_13": "暖氣不接。",
    "T47n1997_009:0753b17_14": "便抱十年終不得生。",
    "T47n1997_009:0753b17_15": "龍牙亦云。",
    "T47n1997_009:0753b18_16": "學道如鑽火。",
    "T47n1997_009:0753b18_17": "逢煙未可休。",
    "T47n1997_009:0753b18_18": "直待金星現。",
    "T47n1997_009:0753b19_19": "燒燃始到頭。",
    "T47n1997_009:0753b19_20": "況此大事。",
    "T47n1997_009:0753b19_21": "三世諸佛為之出世。",
    "T47n1997_009:0753b20_22": "自己透脫生死。",
    "T47n1997_009:0753b20_23": "豈可因循如存若亡。",
    "T47n1997_009:0753b20_24": "却請努力向前。",
    "T47n1997_009:0753b21_25": "以悟為則。",
    "T47n1997_009:0753b21_26": "各希取信。",
    "T47n1997_009:0753b21_27": "珍重。",
    "T47n1997_009:0753b22_0": "示眾云。",
    "T47n1997_009:0753b22_1": "具足凡夫法。",
    "T47n1997_009:0753b22_2": "凡夫不知。",
    "T47n1997_009:0753b22_3": "具足聖人法。",
    "T47n1997_009:0753b23_0": "聖人不會。",
    "T47n1997_009:0753b23_1": "聖人若會即是凡夫。",
    "T47n1997_009:0753b23_2": "凡夫若知即是聖人。",
    "T47n1997_009:0753b24_3": "此事一語兩當。",
    "T47n1997_009:0753b24_4": "還委悉麼。",
    "T47n1997_009:0753b24_5": "要識聖人凡夫凡夫聖人。",
    "T47n1997_009:0753b25_6": "長者長法身。",
    "T47n1997_009:0753b25_7": "短者短法身。",
    "T47n1997_009:0753b25_8": "大小青黃一切法悉皆如如。",
    "T47n1997_009:0753b26_9": "渾是箇大解脫門。",
    "T47n1997_009:0753b27_0": "更無別異。",
    "T47n1997_009:0753b27_1": "但得情亡意遣一念真正。",
    "T47n1997_009:0753b27_2": "隨處遇緣皆為妙用。",
    "T47n1997_009:0753b28_3": "所以古人道。",
    "T47n1997_009:0753b28_4": "處處真處處真。",
    "T47n1997_009:0753b28_5": "塵塵盡是本來人。",
    "T47n1997_009:0753b29_6": "真實說時聲不見。",
    "T47n1997_009:0753b29_7": "正體堂堂沒却身。",
    "T47n1997_009:0753c01_8": "至於天堂地獄草芥人畜六類四生纖洪近遠無不皆真。",
    "T47n1997_009:0753c02_9": "但為未徹根源底。",
    "T47n1997_009:0753c02_10": "居常生心動念。",
    "T47n1997_009:0753c03_11": "皆在塵勞業識中流轉。",
    "T47n1997_009:0753c03_12": "未曾回光返照。",
    "T47n1997_009:0753c04_13": "所以枉受輪迴。",
    "T47n1997_009:0753c04_14": "不得受用。",
    "T47n1997_009:0753c04_15": "若能發慷慨心。",
    "T47n1997_009:0753c05_16": "啟特達志。",
    "T47n1997_009:0753c05_17": "頓歇諸緣。",
    "T47n1997_009:0753c05_18": "直下了得徹底分明心地了了。",
    "T47n1997_009:0753c06_19": "可謂行亦禪坐亦禪。",
    "T47n1997_009:0753c06_20": "語默動靜皆為正體。",
    "T47n1997_009:0753c07_21": "是故雲門道。",
    "T47n1997_009:0753c07_22": "和尚子莫妄思。",
    "T47n1997_009:0753c07_23": "山是山水是水。",
    "T47n1997_009:0753c08_24": "僧是僧俗是俗。",
    "T47n1997_009:0753c08_25": "又道見拄杖子但喚作拄杖子。",
    "T47n1997_009:0753c09_26": "見屋但喚作屋。",
    "T47n1997_009:0753c09_27": "謂之覿體全真。",
    "T47n1997_009:0753c09_28": "有般人。",
    "T47n1997_009:0753c10_29": "取一邊捨一邊。",
    "T47n1997_009:0753c10_30": "見處遍枯不能著實。",
    "T47n1997_009:0753c10_31": "便乃得失居懷。",
    "T47n1997_009:0753c11_32": "被物所轉。",
    "T47n1997_009:0753c11_33": "無自由分。",
    "T47n1997_009:0753c11_34": "看他從上古人。",
    "T47n1997_009:0753c12_35": "得大受用利物垂慈全身擔荷。",
    "T47n1997_009:0753c12_36": "或出或沒或隱或顯或順或逆。",
    "T47n1997_009:0753c13_37": "開建化門示徑截路。",
    "T47n1997_009:0753c14_0": "無不教人究本明宗離諸執著。",
    "T47n1997_009:0753c14_1": "豈不見。",
    "T47n1997_009:0753c14_2": "稜道者參雪峯靈雲玄沙。",
    "T47n1997_009:0753c15_3": "來往十五年。",
    "T47n1997_009:0753c15_4": "坐破七箇蒲團。",
    "T47n1997_009:0753c16_5": "念茲在茲。",
    "T47n1997_009:0753c16_6": "後因捲簾忽然大悟。",
    "T47n1997_009:0753c16_7": "有頌云。",
    "T47n1997_009:0753c17_8": "也大差也大差。",
    "T47n1997_009:0753c17_9": "捲起簾來見天下。",
    "T47n1997_009:0753c17_10": "有人問我意何如。",
    "T47n1997_009:0753c18_11": "拈取拂子劈口打。",
    "T47n1997_009:0753c18_12": "及乎住長慶。",
    "T47n1997_009:0753c18_13": "示眾云。",
    "T47n1997_009:0753c19_14": "撞著道伴交肩過一生參學事畢。",
    "T47n1997_009:0753c19_15": "似此稱提。",
    "T47n1997_009:0753c20_16": "若不知有。",
    "T47n1997_009:0753c20_17": "爭解恁麼道。",
    "T47n1997_009:0753c20_18": "可謂從自己胸襟流出。",
    "T47n1997_009:0753c21_19": "蓋天蓋地。",
    "T47n1997_009:0753c21_20": "又有問。",
    "T47n1997_009:0753c21_21": "如何是合聖之言。",
    "T47n1997_009:0753c22_0": "對云。",
    "T47n1997_009:0753c22_1": "大小長慶。",
    "T47n1997_009:0753c22_2": "被闍黎一問。",
    "T47n1997_009:0753c22_3": "直得口似匾檐。",
    "T47n1997_009:0753c23_0": "若善參詳。",
    "T47n1997_009:0753c23_1": "可以丹霄獨步自在縱橫。",
    "T47n1997_009:0753c23_2": "大眾。",
    "T47n1997_009:0753c23_3": "還知落處麼。",
    "T47n1997_009:0753c24_4": "若也未知。",
    "T47n1997_009:0753c24_5": "為諸人拈出。",
    "T47n1997_009:0753c24_6": "白雲盡處是青山。",
    "T47n1997_009:0753c25_7": "行人更在青山外。",
    "T47n1997_009:0753c26_0": "示眾云。",
    "T47n1997_009:0753c26_1": "德山小參不答話。",
    "T47n1997_009:0753c26_2": "打鎖敲枷。",
    "T47n1997_009:0753c26_3": "趙州小參要答話。",
    "T47n1997_009:0753c27_4": "將杖探水。",
    "T47n1997_009:0753c27_5": "崇寧今夜也不管答話。",
    "T47n1997_009:0753c28_0": "亦不管不答話。",
    "T47n1997_009:0753c28_1": "偶然向衣單下。",
    "T47n1997_009:0753c28_2": "拾得箇千年桃核。",
    "T47n1997_009:0753c29_3": "舉似大眾。",
    "T47n1997_009:0753c29_4": "乃橫拄杖云。",
    "T47n1997_009:0753c29_5": "爾諸人。",
    "T47n1997_009:0753c29_6": "若也恁麼坐斷天下人舌頭。",
    "T47n1997_009:0754a01_7": "復以拄杖卓地云。",
    "T47n1997_009:0754a01_8": "爾諸人。",
    "T47n1997_009:0754a02_9": "若也恁麼入地獄如箭射。",
    "T47n1997_009:0754a02_10": "且道利害在什麼處。",
    "T47n1997_009:0754a03_11": "若不同床臥。",
    "T47n1997_009:0754a03_12": "焉知被底穿。",
    "T47n1997_009:0754a04_0": "道林寺解夏小參。",
    "T47n1997_009:0754a04_1": "示眾云。",
    "T47n1997_009:0754a04_2": "凉夜群動寂。",
    "T47n1997_009:0754a04_3": "禪庭正清虛。",
    "T47n1997_009:0754a05_4": "明月印空闊。",
    "T47n1997_009:0754a05_5": "白雲任卷舒。",
    "T47n1997_009:0754a05_6": "當陽好定奪。",
    "T47n1997_009:0754a06_7": "還有作家無。",
    "T47n1997_009:0754a06_8": "僧問。",
    "T47n1997_009:0754a06_9": "一塵舉大地收。",
    "T47n1997_009:0754a06_10": "一葉落天下秋。",
    "T47n1997_009:0754a07_11": "衲僧分上成得箇什麼。",
    "T47n1997_009:0754a07_12": "師云。",
    "T47n1997_009:0754a07_13": "前不迭村後不迭店。",
    "T47n1997_009:0754a08_14": "進云。",
    "T47n1997_009:0754a08_15": "大小道林。",
    "T47n1997_009:0754a08_16": "話頭也不識。",
    "T47n1997_009:0754a08_17": "師云。",
    "T47n1997_009:0754a09_18": "切忌虛空裏[舀*鳥]啄。",
    "T47n1997_009:0754a09_19": "進云。",
    "T47n1997_009:0754a09_20": "和尚恁麼道那。",
    "T47n1997_009:0754a09_21": "師云。",
    "T47n1997_009:0754a10_22": "作麼生是爾著實處。",
    "T47n1997_009:0754a10_23": "僧擬進語。",
    "T47n1997_009:0754a10_24": "師云了。",
    "T47n1997_009:0754a10_25": "進云。",
    "T47n1997_009:0754a11_26": "爭奈落霞與孤鶩齊飛。",
    "T47n1997_009:0754a11_27": "秋水其長天一色。",
    "T47n1997_009:0754a12_0": "師云。",
    "T47n1997_009:0754a12_1": "賊過後張弓。",
    "T47n1997_009:0754a12_2": "師乃云。",
    "T47n1997_009:0754a12_3": "於內無心於外無相。",
    "T47n1997_009:0754a13_4": "於上無佛祖可仰。",
    "T47n1997_009:0754a13_5": "於下無眾生可悲。",
    "T47n1997_009:0754a13_6": "慳貪嫉妬俱除。",
    "T47n1997_009:0754a14_7": "慈悲喜捨併却。",
    "T47n1997_009:0754a14_8": "兩頭坐斷中道不拘。",
    "T47n1997_009:0754a15_9": "淨裸裸絕承當。",
    "T47n1997_009:0754a15_10": "赤灑灑無回互。",
    "T47n1997_009:0754a15_11": "擊之不濁揚之不清。",
    "T47n1997_009:0754a16_12": "撥之不動攪之不轉。",
    "T47n1997_009:0754a16_13": "直下坐斷萬法。",
    "T47n1997_009:0754a17_14": "頭上孤危不立。",
    "T47n1997_009:0754a17_15": "於此安居隨處解脫。",
    "T47n1997_009:0754a17_16": "更說什麼長期百二十中期百日下期八十日。",
    "T47n1997_009:0754a18_17": "且功成一句作麼生道。",
    "T47n1997_009:0754a19_18": "不憐鵝護雪。",
    "T47n1997_009:0754a19_19": "且喜蠟人氷。",
    "T47n1997_009:0754a21_0": "冬夜小參。",
    "T47n1997_009:0754a21_1": "師云。",
    "T47n1997_009:0754a21_2": "佛祖大機人天正眼。",
    "T47n1997_009:0754a21_3": "眹兆未分時無許多事。",
    "T47n1997_009:0754a22_4": "及至一氣已分。",
    "T47n1997_009:0754a22_5": "便有生住異滅春夏秋冬。",
    "T47n1997_009:0754a23_6": "若隨波逐浪去。",
    "T47n1997_009:0754a23_7": "種種建立觸處圓融。",
    "T47n1997_009:0754a24_8": "若截斷眾流去。",
    "T47n1997_009:0754a24_9": "把住要津不通凡聖。",
    "T47n1997_009:0754a24_10": "若也二途不涉。",
    "T47n1997_009:0754a25_11": "脚跟下灑灑落落。",
    "T47n1997_009:0754a25_12": "豈不是本分衲僧。",
    "T47n1997_009:0754a26_13": "且道無陰陽地上如何通信。",
    "T47n1997_009:0754a26_14": "直待明年三月盡。",
    "T47n1997_009:0754a27_15": "莫言冬後雪霜寒。",
    "T47n1997_009:0754a28_0": "小參。",
    "T47n1997_009:0754a28_1": "僧問。",
    "T47n1997_009:0754a28_2": "猿抱子歸青嶂後。",
    "T47n1997_009:0754a28_3": "鳥銜華落碧巖前。",
    "T47n1997_009:0754a29_4": "此是和尚舊時安身立命處。",
    "T47n1997_009:0754a29_5": "如何是道林境。",
    "T47n1997_009:0754b01_6": "師云。",
    "T47n1997_009:0754b01_7": "寺門高開洞庭野。",
    "T47n1997_009:0754b01_8": "殿脚插入赤沙湖。",
    "T47n1997_009:0754b02_0": "進云。",
    "T47n1997_009:0754b02_1": "如何是境中人。",
    "T47n1997_009:0754b02_2": "師云。",
    "T47n1997_009:0754b02_3": "僧寶人人滄海珠。",
    "T47n1997_009:0754b03_0": "進云。",
    "T47n1997_009:0754b03_1": "此是杜工部底。",
    "T47n1997_009:0754b03_2": "作麼生是和尚底。",
    "T47n1997_009:0754b03_3": "師云。",
    "T47n1997_009:0754b04_0": "且莫亂統。",
    "T47n1997_009:0754b04_1": "進云。",
    "T47n1997_009:0754b04_2": "如何是奪人不奪境。",
    "T47n1997_009:0754b04_3": "師云。",
    "T47n1997_009:0754b04_4": "山僧有眼不曾見。",
    "T47n1997_009:0754b05_5": "進云。",
    "T47n1997_009:0754b05_6": "如何是奪境不奪人。",
    "T47n1997_009:0754b05_7": "師云。",
    "T47n1997_009:0754b06_8": "闍黎問得自然親。",
    "T47n1997_009:0754b06_9": "進云。",
    "T47n1997_009:0754b06_10": "如何是人境俱奪。",
    "T47n1997_009:0754b07_0": "師云收。",
    "T47n1997_009:0754b07_1": "進云。",
    "T47n1997_009:0754b07_2": "如何是人境俱不奪。",
    "T47n1997_009:0754b07_3": "師云放。",
    "T47n1997_009:0754b07_4": "進云。",
    "T47n1997_009:0754b08_5": "人境已蒙師指示。",
    "T47n1997_009:0754b08_6": "向上還有事也無。",
    "T47n1997_009:0754b08_7": "師云。",
    "T47n1997_009:0754b09_0": "不可土上更加泥。",
    "T47n1997_009:0754b09_1": "師乃云。",
    "T47n1997_009:0754b09_2": "恁麼恁麼。",
    "T47n1997_009:0754b09_3": "如虎帶角。",
    "T47n1997_009:0754b10_4": "不恁麼。",
    "T47n1997_009:0754b10_5": "不恁麼。",
    "T47n1997_009:0754b10_6": "似兔無角。",
    "T47n1997_009:0754b10_7": "恁麼又却不恁麼。",
    "T47n1997_009:0754b11_8": "暗隔兩重關。",
    "T47n1997_009:0754b11_9": "不恁麼又却恁麼。",
    "T47n1997_009:0754b11_10": "全行向上路。",
    "T47n1997_009:0754b12_11": "此四句若排著四邊。",
    "T47n1997_009:0754b12_12": "則為禍為崇。",
    "T47n1997_009:0754b12_13": "若一時劃斷。",
    "T47n1997_009:0754b13_14": "則為祥為瑞。",
    "T47n1997_009:0754b13_15": "何故他從上來本無許多事。",
    "T47n1997_009:0754b14_16": "只為群機有利鈍所悟有淺深。",
    "T47n1997_009:0754b14_17": "是故勞他諸聖出來。",
    "T47n1997_009:0754b15_18": "應物現形隨機逗教。",
    "T47n1997_009:0754b15_19": "便有權有實有照有用有殺有活。",
    "T47n1997_009:0754b16_20": "有賓有主有問有答。",
    "T47n1997_009:0754b16_21": "萬別千差只如。",
    "T47n1997_009:0754b17_22": "正當恁麼時。",
    "T47n1997_009:0754b17_23": "可中若有箇漢。",
    "T47n1997_009:0754b17_24": "牙如劍樹口似血盆。",
    "T47n1997_009:0754b18_25": "一棒打不回頭。",
    "T47n1997_009:0754b18_26": "出來掀翻露布截斷葛藤。",
    "T47n1997_009:0754b19_27": "天是天地是地。",
    "T47n1997_009:0754b19_28": "山是山水是水。",
    "T47n1997_009:0754b20_29": "長是長短是短。",
    "T47n1997_009:0754b20_30": "方是方圓是圓。",
    "T47n1997_009:0754b20_31": "一絲毫不得動著。",
    "T47n1997_009:0754b21_32": "直下承當。",
    "T47n1997_009:0754b21_33": "便能丹霄獨步。",
    "T47n1997_009:0754b21_34": "與他諸聖把手共行。",
    "T47n1997_009:0754b22_35": "有佛世界互為賓主接物利生。",
    "T47n1997_009:0754b22_36": "無佛世界風颯颯地。",
    "T47n1997_009:0754b23_37": "坐斷要津不通凡聖。",
    "T47n1997_009:0754b23_38": "然雖恁麼。",
    "T47n1997_009:0754b24_39": "若是於中端的恁麼來底。",
    "T47n1997_009:0754b24_40": "且道與他作麼生商量。",
    "T47n1997_009:0754b25_41": "待老僧上山斫棒來。",
    "T47n1997_009:0754b26_0": "小參。",
    "T47n1997_009:0754b26_1": "僧問。",
    "T47n1997_009:0754b26_2": "玄沙不過嶺。",
    "T47n1997_009:0754b26_3": "保壽不渡河。",
    "T47n1997_009:0754b26_4": "未審意旨如何。",
    "T47n1997_009:0754b27_5": "師云。",
    "T47n1997_009:0754b27_6": "直超物外。",
    "T47n1997_009:0754b27_7": "進云。",
    "T47n1997_009:0754b27_8": "雪峯三度到投子。",
    "T47n1997_009:0754b28_9": "九度上洞山。",
    "T47n1997_009:0754b28_10": "是同是別。",
    "T47n1997_009:0754b28_11": "師云。",
    "T47n1997_009:0754b28_12": "別是一家春。",
    "T47n1997_009:0754b29_13": "進云。",
    "T47n1997_009:0754b29_14": "恁麼則春色無高下。",
    "T47n1997_009:0754b29_15": "華枝自短長。",
    "T47n1997_009:0754b29_16": "師云。",
    "T47n1997_009:0754c01_17": "一任卜度。",
    "T47n1997_009:0754c01_18": "師乃云。",
    "T47n1997_009:0754c01_19": "大道坦然更無回互。",
    "T47n1997_009:0754c01_20": "同證者識同道者知。",
    "T47n1997_009:0754c02_21": "若有實法繫綴羅籠人。",
    "T47n1997_009:0754c02_22": "入地獄如箭射。",
    "T47n1997_009:0754c03_23": "所以諸佛出世祖師西來。",
    "T47n1997_009:0754c03_24": "實無一法與人。",
    "T47n1997_009:0754c04_25": "只要諸人休歇。",
    "T47n1997_009:0754c04_26": "若實到休歇田地。",
    "T47n1997_009:0754c05_0": "二六時中如天普蓋似地普擎。",
    "T47n1997_009:0754c05_1": "更不剩一絲毫。",
    "T47n1997_009:0754c06_2": "亦不欠一絲毫。",
    "T47n1997_009:0754c06_3": "淨裸裸赤灑灑。",
    "T47n1997_009:0754c06_4": "見成公案。",
    "T47n1997_009:0754c07_0": "若更躊蹰四顧。",
    "T47n1997_009:0754c07_1": "說有說無論得論失。",
    "T47n1997_009:0754c07_2": "有會有不會。",
    "T47n1997_009:0754c08_3": "有得有不得。",
    "T47n1997_009:0754c08_4": "落二落三去也。",
    "T47n1997_009:0754c08_5": "所以上古尊宿天下老和尚。",
    "T47n1997_009:0754c09_6": "拂子邊拄杖頭。",
    "T47n1997_009:0754c09_7": "現無量神通。",
    "T47n1997_009:0754c10_8": "其實與爾諸人。",
    "T47n1997_009:0754c10_9": "解黏去縛抽釘拔楔。",
    "T47n1997_009:0754c10_10": "令汝直下到安閑之地。",
    "T47n1997_009:0754c11_11": "也無證也無得。",
    "T47n1997_009:0754c11_12": "亦無周由者也。",
    "T47n1997_009:0754c12_13": "七十三八十四。",
    "T47n1997_009:0754c12_14": "若也未到。",
    "T47n1997_009:0754c12_15": "不免搽糊去也。",
    "T47n1997_009:0754c13_16": "一切境界一切有無一切法門。",
    "T47n1997_009:0754c13_17": "但於一言下一念頃脫得情塵去。",
    "T47n1997_009:0754c14_18": "塵塵剎剎廓周沙界。",
    "T47n1997_009:0754c15_0": "大小長短方圓。",
    "T47n1997_009:0754c15_1": "青黃赤白。",
    "T47n1997_009:0754c15_2": "全是本心。",
    "T47n1997_009:0754c15_3": "於見處淨裸裸。",
    "T47n1997_009:0754c16_4": "於聞處八面玲瓏。",
    "T47n1997_009:0754c16_5": "無得失是非。",
    "T47n1997_009:0754c16_6": "無長短好惡。",
    "T47n1997_009:0754c17_7": "山是山水是水。",
    "T47n1997_009:0754c17_8": "僧是僧俗是俗。",
    "T47n1997_009:0754c17_9": "無異無別。",
    "T47n1997_009:0754c18_10": "若能實頭到這箇田地。",
    "T47n1997_009:0754c18_11": "離情塵絕露布。",
    "T47n1997_009:0754c19_0": "不落勝妙。",
    "T47n1997_009:0754c19_1": "更須知有一塵中含一切境界。",
    "T47n1997_009:0754c19_2": "一切境界入一塵中。",
    "T47n1997_009:0754c20_3": "悉皆含攝。",
    "T47n1997_009:0754c20_4": "於一毫端現無邊剎海。",
    "T47n1997_009:0754c21_5": "直得恁麼。",
    "T47n1997_009:0754c21_6": "更須知有大用現前時節始得。",
    "T47n1997_009:0754c22_7": "且作麼生是大用現前底時節。",
    "T47n1997_009:0754c22_8": "畢竟水須朝海去。",
    "T47n1997_009:0754c23_9": "到頭雲定覓山歸。",
    "T47n1997_009:0754c24_0": "冬夜小參。",
    "T47n1997_009:0754c24_1": "有作思惟從有心起。",
    "T47n1997_009:0754c24_2": "一輪生滅行無間道。",
    "T47n1997_009:0754c25_3": "修無漏業萬古超然。",
    "T47n1997_009:0754c25_4": "拈一放一半開半合。",
    "T47n1997_009:0754c26_5": "未免在窠窟裏。",
    "T47n1997_009:0754c26_6": "殊不知。",
    "T47n1997_009:0754c26_7": "往復無間動靜一如。",
    "T47n1997_009:0754c27_8": "融大千沙界於一塵。",
    "T47n1997_009:0754c27_9": "會十世古今於一念。",
    "T47n1997_009:0754c28_10": "去來起滅甚處安排。",
    "T47n1997_009:0754c28_11": "春夏秋冬如何理論。",
    "T47n1997_009:0754c29_0": "到這裏淨裸裸赤灑灑沒可把。",
    "T47n1997_009:0754c29_1": "東西不辨南北不分底。",
    "T47n1997_009:0755a01_2": "則故是未知落處。",
    "T47n1997_009:0755a01_3": "久參先德脚踏實地。",
    "T47n1997_009:0755a02_4": "且道正當恁麼時如何。",
    "T47n1997_009:0755a02_5": "還委悉麼。",
    "T47n1997_009:0755a02_6": "群陰消剝盡。",
    "T47n1997_009:0755a03_7": "來日是書雲。",
    "T47n1997_009:0755a04_0": "除夜小參。",
    "T47n1997_009:0755a04_1": "樹凋葉落瓦解氷消。",
    "T47n1997_009:0755a04_2": "歲暮年窮家殘戶破。",
    "T47n1997_009:0755a05_3": "以世諦觀之。",
    "T47n1997_009:0755a05_4": "是不稱意境界。",
    "T47n1997_009:0755a05_5": "以道眼觀之。",
    "T47n1997_009:0755a06_6": "却是好箇消息。",
    "T47n1997_009:0755a06_7": "豈不見香嚴道。",
    "T47n1997_009:0755a06_8": "去年貧未是貧。",
    "T47n1997_009:0755a07_9": "今年貧始是貧。",
    "T47n1997_009:0755a07_10": "去年貧有卓錐之地。",
    "T47n1997_009:0755a08_0": "今年貧錐也無卓。",
    "T47n1997_009:0755a08_1": "又有古德道。",
    "T47n1997_009:0755a08_2": "富貴即易。",
    "T47n1997_009:0755a08_3": "貧窮即難。",
    "T47n1997_009:0755a09_4": "本分人打得徹信得及見得透。",
    "T47n1997_009:0755a09_5": "物物頭頭俱為妙用。",
    "T47n1997_009:0755a10_6": "塵塵剎剎悉是真乘。",
    "T47n1997_009:0755a10_7": "若便恁麼歇去。",
    "T47n1997_009:0755a11_8": "敢保老兄未徹在。",
    "T47n1997_009:0755a11_9": "那堪更說漸說頓說玄說妙說理說事。",
    "T47n1997_009:0755a12_10": "却須放却玄妙放却理性。",
    "T47n1997_009:0755a13_11": "打破向上向下。",
    "T47n1997_009:0755a13_12": "截斷佛印祖機。",
    "T47n1997_009:0755a13_13": "直得東西不辨南北不分懞懞[目*董][目*董]。",
    "T47n1997_009:0755a14_14": "遇飯喫飯不知是飯。",
    "T47n1997_009:0755a15_15": "遇茶喫茶不知是茶。",
    "T47n1997_009:0755a15_16": "到這裏猶只得箇衲僧門下潔白露淨底。",
    "T47n1997_009:0755a16_17": "是故洞山道。",
    "T47n1997_009:0755a16_18": "見佛與祖是生冤家。",
    "T47n1997_009:0755a17_19": "始有參學分。",
    "T47n1997_009:0755a17_20": "正當恁麼時全體現成。",
    "T47n1997_009:0755a18_21": "佛界不收魔界不管。",
    "T47n1997_009:0755a18_22": "且道向什麼處行履。",
    "T47n1997_009:0755a19_0": "若識得去。",
    "T47n1997_009:0755a19_1": "便成年窮歲盡相續不斷。",
    "T47n1997_009:0755a19_2": "相續不斷歲盡年窮。",
    "T47n1997_009:0755a20_3": "正當恁麼時一句作麼生道。",
    "T47n1997_009:0755a20_4": "今歲今宵盡。",
    "T47n1997_009:0755a21_5": "來年來日新。",
    "T47n1997_009:0755a22_0": "解夏小參云。",
    "T47n1997_009:0755a22_1": "年豐歲稔道泰時清。",
    "T47n1997_009:0755a22_2": "唱太平歌樂無為化。",
    "T47n1997_009:0755a23_3": "護生既滿蠟人愈氷。",
    "T47n1997_009:0755a23_4": "秋色澄澄金風拂拂。",
    "T47n1997_009:0755a24_5": "正當恁麼時。",
    "T47n1997_009:0755a24_6": "說什麼釋迦彌勒文殊普賢德山臨濟。",
    "T47n1997_009:0755a25_7": "向上向下有事無事。",
    "T47n1997_009:0755a25_8": "直下一時坐斷。",
    "T47n1997_009:0755a26_9": "直得風颯颯地。",
    "T47n1997_009:0755a26_10": "人人分上壁立千仞。",
    "T47n1997_009:0755a27_0": "各各面前飛大寶光。",
    "T47n1997_009:0755a27_1": "且不落夤緣一句作麼生道。",
    "T47n1997_009:0755a28_2": "麓峯頭倒卓。",
    "T47n1997_009:0755a28_3": "石笋暗抽枝。",
    "T47n1997_009:0755a29_0": "道林寺小參云。",
    "T47n1997_009:0755a29_1": "四海共參尋。",
    "T47n1997_009:0755a29_2": "十方同聚會。",
    "T47n1997_009:0755a29_3": "路逢達道人。",
    "T47n1997_009:0755b01_4": "不將語默對。",
    "T47n1997_009:0755b01_5": "還有共相酬唱底麼。",
    "T47n1997_009:0755b02_0": "僧問。",
    "T47n1997_009:0755b02_1": "千尺絲綸直下垂。",
    "T47n1997_009:0755b02_2": "一波纔動萬波隨。",
    "T47n1997_009:0755b02_3": "夜靜水寒魚不食。",
    "T47n1997_009:0755b03_4": "滿船空載月明歸。",
    "T47n1997_009:0755b03_5": "未審此理如何。",
    "T47n1997_009:0755b04_6": "師云。",
    "T47n1997_009:0755b04_7": "離鉤三寸高著眼。",
    "T47n1997_009:0755b04_8": "進云。",
    "T47n1997_009:0755b04_9": "恁麼則自是不歸。",
    "T47n1997_009:0755b05_10": "歸便得。",
    "T47n1997_009:0755b05_11": "五湖煙浪有誰爭。",
    "T47n1997_009:0755b05_12": "師云。",
    "T47n1997_009:0755b05_13": "乾坤大地一時收。",
    "T47n1997_009:0755b06_14": "進云。",
    "T47n1997_009:0755b06_15": "只如垂鉤四海只釣獰龍。",
    "T47n1997_009:0755b07_0": "格外談玄為尋知識。",
    "T47n1997_009:0755b07_1": "誰是知識者師云。",
    "T47n1997_009:0755b07_2": "赤心片片。",
    "T47n1997_009:0755b08_3": "進云。",
    "T47n1997_009:0755b08_4": "巨浪涌千尋。",
    "T47n1997_009:0755b08_5": "澄波不離水。",
    "T47n1997_009:0755b08_6": "師云。",
    "T47n1997_009:0755b09_0": "寒山逢拾得。",
    "T47n1997_009:0755b09_1": "撫掌笑呵呵。",
    "T47n1997_009:0755b09_2": "問云。",
    "T47n1997_009:0755b09_3": "路逢達道人。",
    "T47n1997_009:0755b10_0": "不將語默對。",
    "T47n1997_009:0755b10_1": "既不將語默對。",
    "T47n1997_009:0755b10_2": "將何祇對。",
    "T47n1997_009:0755b10_3": "師云。",
    "T47n1997_009:0755b11_0": "吞聲削跡。",
    "T47n1997_009:0755b11_1": "進云。",
    "T47n1997_009:0755b11_2": "一言難啟口。",
    "T47n1997_009:0755b11_3": "千古意分明。",
    "T47n1997_009:0755b11_4": "師云。",
    "T47n1997_009:0755b12_5": "且須急著眼。",
    "T47n1997_009:0755b12_6": "進云。",
    "T47n1997_009:0755b12_7": "有句無句如藤倚樹。",
    "T47n1997_009:0755b12_8": "如何得透脫。",
    "T47n1997_009:0755b13_9": "師云。",
    "T47n1997_009:0755b13_10": "倚天長劍逼人寒。",
    "T47n1997_009:0755b13_11": "進云。",
    "T47n1997_009:0755b13_12": "只如樹倒藤枯。",
    "T47n1997_009:0755b14_13": "溈山為什麼呵呵大笑。",
    "T47n1997_009:0755b14_14": "師云。",
    "T47n1997_009:0755b14_15": "愛他底著他底。",
    "T47n1997_009:0755b15_16": "進云。",
    "T47n1997_009:0755b15_17": "忽被學人掀倒禪床拗折拄杖。",
    "T47n1997_009:0755b16_18": "又得箇什麼伎倆。",
    "T47n1997_009:0755b16_19": "師云。",
    "T47n1997_009:0755b16_20": "也是賊過後張弓。",
    "T47n1997_009:0755b17_0": "師乃云。",
    "T47n1997_009:0755b17_1": "不與一法作對。",
    "T47n1997_009:0755b17_2": "正體迢然。",
    "T47n1997_009:0755b17_3": "萬象不能覆藏。",
    "T47n1997_009:0755b18_4": "神機歷掌。",
    "T47n1997_009:0755b18_5": "望州亭烏石嶺僧堂前相見。",
    "T47n1997_009:0755b19_0": "已涉誵訛。",
    "T47n1997_009:0755b19_1": "不是心不是佛不是物。",
    "T47n1997_009:0755b19_2": "已拖泥帶水。",
    "T47n1997_009:0755b20_3": "到這裏上根利智。",
    "T47n1997_009:0755b20_4": "剔起便行。",
    "T47n1997_009:0755b20_5": "不落言詮不拘機境。",
    "T47n1997_009:0755b21_6": "直下向文彩未彰已前。",
    "T47n1997_009:0755b21_7": "一時坐斷。",
    "T47n1997_009:0755b21_8": "可謂如天普蓋似地普擎。",
    "T47n1997_009:0755b22_9": "如虛空寬廣。",
    "T47n1997_009:0755b22_10": "如日月普照。",
    "T47n1997_009:0755b23_11": "無處不圓無處不遍。",
    "T47n1997_009:0755b23_12": "所以道。",
    "T47n1997_009:0755b23_13": "向上人見處把斷世界不漏絲毫。",
    "T47n1997_009:0755b24_14": "無得先是非。",
    "T47n1997_009:0755b24_15": "離見聞知覺。",
    "T47n1997_009:0755b25_16": "如壺公瓢中自有天地日月。",
    "T47n1997_009:0755b25_17": "至於一語一默一跬一步一挨一拶。",
    "T47n1997_009:0755b26_18": "坐斷千差路頭。",
    "T47n1997_009:0755b26_19": "不許天下衲僧正眼覷著。",
    "T47n1997_009:0755b27_20": "所以道。",
    "T47n1997_009:0755b27_21": "須是恁麼人。",
    "T47n1997_009:0755b28_0": "方解恁麼事。",
    "T47n1997_009:0755b28_1": "只如今坐立儼然。",
    "T47n1997_009:0755b28_2": "頭頭物物悉皆全體現成處。",
    "T47n1997_009:0755b29_3": "且道如何照了。",
    "T47n1997_009:0755b29_4": "萬古碧潭空界月。",
    "T47n1997_009:0755c01_5": "再三撈摝始應知下座。",
    "T47n1997_009:0755c02_0": "小參。",
    "T47n1997_009:0755c02_1": "僧問。",
    "T47n1997_009:0755c02_2": "古者道。",
    "T47n1997_009:0755c02_3": "釋迦彌勒猶是他奴。",
    "T47n1997_009:0755c02_4": "且道他是什麼人。",
    "T47n1997_009:0755c03_5": "師云。",
    "T47n1997_009:0755c03_6": "三家村裏孟八郎。",
    "T47n1997_009:0755c03_7": "進云。",
    "T47n1997_009:0755c03_8": "恁麼則胸襟流出。",
    "T47n1997_009:0755c04_9": "師云。",
    "T47n1997_009:0755c04_10": "更是阿誰。",
    "T47n1997_009:0755c04_11": "進云。",
    "T47n1997_009:0755c04_12": "正是他奴。",
    "T47n1997_009:0755c05_13": "師云。",
    "T47n1997_009:0755c05_14": "坐却舌頭。",
    "T47n1997_009:0755c05_15": "進云。",
    "T47n1997_009:0755c05_16": "情知老漢弓折箭盡。",
    "T47n1997_009:0755c06_17": "師云是。",
    "T47n1997_009:0755c06_18": "進云。",
    "T47n1997_009:0755c06_19": "自領出去。",
    "T47n1997_009:0755c06_20": "師云。",
    "T47n1997_009:0755c06_21": "看爾作麼生折合。",
    "T47n1997_009:0755c07_22": "進云。",
    "T47n1997_009:0755c07_23": "只如隔身句又作麼生。",
    "T47n1997_009:0755c07_24": "師云。",
    "T47n1997_009:0755c07_25": "離四句絕百非進云。",
    "T47n1997_009:0755c08_26": "掀倒禪床師云。",
    "T47n1997_009:0755c08_27": "未信爾在師乃云。",
    "T47n1997_009:0755c09_28": "明頭合暗頭合。",
    "T47n1997_009:0755c09_29": "手執夜明符。",
    "T47n1997_009:0755c09_30": "日面佛月面佛。",
    "T47n1997_009:0755c10_31": "提取金剛劍。",
    "T47n1997_009:0755c10_32": "有向上鉗鎚。",
    "T47n1997_009:0755c10_33": "具作家眼目千聖羅籠他不住。",
    "T47n1997_009:0755c11_34": "萬法繫綴他不得。",
    "T47n1997_009:0755c11_35": "等閑不掛一絲毫。",
    "T47n1997_009:0755c12_36": "坐斷十方。",
    "T47n1997_009:0755c12_37": "淨裸裸。",
    "T47n1997_009:0755c12_38": "所以道。",
    "T47n1997_009:0755c12_39": "大丈夫秉慧劍。",
    "T47n1997_009:0755c13_40": "般若鋒兮金剛焰。",
    "T47n1997_009:0755c13_41": "非但能摧外道心。",
    "T47n1997_009:0755c14_42": "早曾落却天魔膽。",
    "T47n1997_009:0755c14_43": "只如今神威凜凜霜刃堂堂。",
    "T47n1997_009:0755c15_44": "頂[寧*頁]上正用此機。",
    "T47n1997_009:0755c15_45": "脚跟下切須薦取。",
    "T47n1997_009:0755c15_46": "若也薦得。",
    "T47n1997_009:0755c16_47": "坐斷報化佛頭。",
    "T47n1997_009:0755c16_48": "不落古今不拘得失。",
    "T47n1997_009:0755c17_0": "若薦未得。",
    "T47n1997_009:0755c17_1": "往往頭上漫漫脚下漫漫。",
    "T47n1997_009:0755c17_2": "且涉流轉物一句作麼生道。",
    "T47n1997_009:0755c18_3": "巨浪涌千尋。",
    "T47n1997_009:0755c18_4": "澄波不離水。",
    "T47n1997_009:0755c19_5": "下座。",
    "T47n1997_009:0755c20_0": "小參。",
    "T47n1997_009:0755c20_1": "僧問。",
    "T47n1997_009:0755c20_2": "春風浩浩烘天地。",
    "T47n1997_009:0755c20_3": "是處山藏煙靄裏。",
    "T47n1997_009:0755c21_4": "無位真人不可尋。",
    "T47n1997_009:0755c21_5": "落華又見隨流水。",
    "T47n1997_009:0755c21_6": "如何是無真人。",
    "T47n1997_009:0755c22_7": "師云。",
    "T47n1997_009:0755c22_8": "剔起眉毛向上看。",
    "T47n1997_009:0755c22_9": "僧云。",
    "T47n1997_009:0755c22_10": "恁麼則獨據千峯上。",
    "T47n1997_009:0755c23_11": "全威百草頭。",
    "T47n1997_009:0755c23_12": "師云。",
    "T47n1997_009:0755c23_13": "我行荒草裏。",
    "T47n1997_009:0755c24_14": "汝又入深村。",
    "T47n1997_009:0755c24_15": "進云。",
    "T47n1997_009:0755c24_16": "自知較一半。",
    "T47n1997_009:0755c24_17": "師云。",
    "T47n1997_009:0755c24_18": "爾還知麼。",
    "T47n1997_009:0755c25_19": "僧云知。",
    "T47n1997_009:0755c25_20": "師云。",
    "T47n1997_009:0755c25_21": "也較一半。",
    "T47n1997_009:0755c25_22": "進云。",
    "T47n1997_009:0755c25_23": "只如臨濟道無位真人是什麼乾屎橛。",
    "T47n1997_009:0755c26_24": "又作麼生。",
    "T47n1997_009:0755c27_0": "師云。",
    "T47n1997_009:0755c27_1": "未得衲僧一半氣息。",
    "T47n1997_009:0755c27_2": "進云。",
    "T47n1997_009:0755c27_3": "為什麼如此。",
    "T47n1997_009:0755c28_0": "師云。",
    "T47n1997_009:0755c28_1": "只為他頂門具眼。",
    "T47n1997_009:0755c28_2": "進云。",
    "T47n1997_009:0755c28_3": "可謂一回拈出一回新。",
    "T47n1997_009:0755c29_4": "一度用來一度快。",
    "T47n1997_009:0755c29_5": "師云。",
    "T47n1997_009:0755c29_6": "七十二棒翻成一百五十。",
    "T47n1997_009:0756a01_7": "師乃云。",
    "T47n1997_009:0756a01_8": "劍輪頂上。",
    "T47n1997_009:0756a01_9": "全機獨露於孤峯。",
    "T47n1997_009:0756a02_10": "石火光中。",
    "T47n1997_009:0756a02_11": "利刃橫施於百草。",
    "T47n1997_009:0756a02_12": "說權說實立照立用。",
    "T47n1997_009:0756a03_13": "行棒行喝說事說理。",
    "T47n1997_009:0756a03_14": "大似把髻投衙。",
    "T47n1997_009:0756a04_15": "直下不說權不說實。",
    "T47n1997_009:0756a04_16": "不立照不立用。",
    "T47n1997_009:0756a04_17": "不行棒不行喝。",
    "T47n1997_009:0756a05_18": "不論事不論理。",
    "T47n1997_009:0756a05_19": "也是擔枷過狀。",
    "T47n1997_009:0756a05_20": "設使恁麼中不恁麼。",
    "T47n1997_009:0756a06_21": "不恁麼中却恁麼。",
    "T47n1997_009:0756a06_22": "正是曳尾靈龜。",
    "T47n1997_009:0756a07_23": "到這裏佛祖也摸索不著。",
    "T47n1997_009:0756a07_24": "若是透得底。",
    "T47n1997_009:0756a08_25": "須知其中有一條通天大路。",
    "T47n1997_009:0756a08_26": "把斷要津凡聖迹絕。",
    "T47n1997_009:0756a09_27": "若也挨得。",
    "T47n1997_009:0756a09_28": "一線開立得一機出。",
    "T47n1997_009:0756a09_29": "則千聖萬聖羅籠他不住。",
    "T47n1997_009:0756a10_30": "千人萬人尋覓他不著。",
    "T47n1997_009:0756a11_0": "不懺罪而罪已消。",
    "T47n1997_009:0756a11_1": "不集福而福已集。",
    "T47n1997_009:0756a11_2": "不立絲毫行門。",
    "T47n1997_009:0756a12_3": "而普賢行門遍滿十虛。",
    "T47n1997_009:0756a12_4": "不立絲毫機智。",
    "T47n1997_009:0756a13_5": "而文殊大用廓周沙界。",
    "T47n1997_009:0756a13_6": "所謂戢玄機於未兆。",
    "T47n1997_009:0756a14_7": "釋迦彌勒攢眉。",
    "T47n1997_009:0756a14_8": "藏冥運於即化。",
    "T47n1997_009:0756a14_9": "德山臨濟却步。",
    "T47n1997_009:0756a15_10": "且不墮功勳一句作麼生道。",
    "T47n1997_009:0756a15_11": "鑊湯爐炭吹教滅。",
    "T47n1997_009:0756a16_12": "劍樹刀山喝使摧。",
