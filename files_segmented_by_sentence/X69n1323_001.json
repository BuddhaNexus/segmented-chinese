{
    "X69n1323_001:0007c07_0": "百丈廣錄卷三",
    "X69n1323_001:0007c09_0": "問。",
    "X69n1323_001:0007c09_1": "如何是大乘入道頓悟法要。",
    "X69n1323_001:0007c09_2": "師云。",
    "X69n1323_001:0007c09_3": "你先歇諸緣。",
    "X69n1323_001:0007c09_4": "休息萬事。",
    "X69n1323_001:0007c10_5": "善與不善。",
    "X69n1323_001:0007c10_6": "世出世間。",
    "X69n1323_001:0007c10_7": "一切諸法。",
    "X69n1323_001:0007c10_8": "竝皆放却。",
    "X69n1323_001:0007c10_9": "莫記莫憶。",
    "X69n1323_001:0007c11_10": "莫緣莫念。",
    "X69n1323_001:0007c11_11": "放捨身心。",
    "X69n1323_001:0007c11_12": "全令自在。",
    "X69n1323_001:0007c11_13": "心如木石。",
    "X69n1323_001:0007c11_14": "口無所辯。",
    "X69n1323_001:0007c12_15": "心無所行。",
    "X69n1323_001:0007c12_16": "心地若空。",
    "X69n1323_001:0007c12_17": "慧日自現。",
    "X69n1323_001:0007c12_18": "如雲開日出。",
    "X69n1323_001:0007c13_0": "但歇一切攀緣。",
    "X69n1323_001:0007c13_1": "貪嗔愛取。",
    "X69n1323_001:0007c13_2": "垢淨情盡。",
    "X69n1323_001:0007c13_3": "對五欲八風不動。",
    "X69n1323_001:0007c14_4": "不被見聞覺知所閡。",
    "X69n1323_001:0007c14_5": "不被諸法所惑。",
    "X69n1323_001:0007c14_6": "自然具足一切功德。",
    "X69n1323_001:0007c15_7": "具足一切神通妙用。",
    "X69n1323_001:0007c15_8": "是解脫人。",
    "X69n1323_001:0007c15_9": "對一切境法。",
    "X69n1323_001:0007c16_0": "心無諍亂。",
    "X69n1323_001:0007c16_1": "不攝不散。",
    "X69n1323_001:0007c16_2": "透一切聲色。",
    "X69n1323_001:0007c16_3": "無有滯閡。",
    "X69n1323_001:0007c16_4": "名為道人。",
    "X69n1323_001:0007c17_5": "善惡是非。",
    "X69n1323_001:0007c17_6": "俱不運用。",
    "X69n1323_001:0007c17_7": "亦不愛一法。",
    "X69n1323_001:0007c17_8": "亦不捨一法。",
    "X69n1323_001:0007c17_9": "名為大乘人。",
    "X69n1323_001:0007c18_10": "不被一切善惡。",
    "X69n1323_001:0007c18_11": "空有垢淨。",
    "X69n1323_001:0007c18_12": "有為無為。",
    "X69n1323_001:0007c18_13": "世出世間。",
    "X69n1323_001:0007c19_14": "福德智慧之所拘繫。",
    "X69n1323_001:0007c19_15": "名為佛慧。",
    "X69n1323_001:0007c19_16": "是非好醜。",
    "X69n1323_001:0007c19_17": "是理非理。",
    "X69n1323_001:0007c20_18": "諸知解情盡。",
    "X69n1323_001:0007c20_19": "不能繫縛。",
    "X69n1323_001:0007c20_20": "處處自在。",
    "X69n1323_001:0007c20_21": "名為初發心菩薩。",
    "X69n1323_001:0007c21_22": "便登佛地。",
    "X69n1323_001:0007c22_0": "問。",
    "X69n1323_001:0007c22_1": "對一境。",
    "X69n1323_001:0007c22_2": "如何得心如木石去。",
    "X69n1323_001:0007c22_3": "師云。",
    "X69n1323_001:0007c22_4": "一切諸法。",
    "X69n1323_001:0007c22_5": "本不自言。",
    "X69n1323_001:0007c23_6": "空不自言。",
    "X69n1323_001:0007c23_7": "色亦不言。",
    "X69n1323_001:0007c23_8": "是非垢淨。",
    "X69n1323_001:0007c23_9": "亦無心繫縛人。",
    "X69n1323_001:0007c24_0": "但為人自生虗妄繫著。",
    "X69n1323_001:0007c24_1": "作若干種解會。",
    "X69n1323_001:0007c24_2": "起若干種知見。",
    "X69n1323_001:0008a01_3": "生若干種愛畏。",
    "X69n1323_001:0008a01_4": "但了諸法不自生。",
    "X69n1323_001:0008a01_5": "皆從自己一念妄想顛倒取相而有。",
    "X69n1323_001:0008a02_6": "知心與境。",
    "X69n1323_001:0008a02_7": "本不相到。",
    "X69n1323_001:0008a02_8": "當處解脫。",
    "X69n1323_001:0008a03_0": "一一諸法。",
    "X69n1323_001:0008a03_1": "當處寂滅。",
    "X69n1323_001:0008a03_2": "當處道場。",
    "X69n1323_001:0008a03_3": "又本有之性。",
    "X69n1323_001:0008a03_4": "不可名目。",
    "X69n1323_001:0008a04_5": "本來不是凡不是聖。",
    "X69n1323_001:0008a04_6": "不是垢淨。",
    "X69n1323_001:0008a04_7": "亦非空有。",
    "X69n1323_001:0008a04_8": "亦非善惡。",
    "X69n1323_001:0008a05_9": "與諸染法相應。",
    "X69n1323_001:0008a05_10": "名人天二乘界。",
    "X69n1323_001:0008a05_11": "若垢淨心盡。",
    "X69n1323_001:0008a05_12": "不住繫縛。",
    "X69n1323_001:0008a06_13": "不住解脫。",
    "X69n1323_001:0008a06_14": "無有一切有為無為縛脫心量。",
    "X69n1323_001:0008a06_15": "起於生死。",
    "X69n1323_001:0008a07_16": "其心自在。",
    "X69n1323_001:0008a07_17": "畢竟不與諸妄虗幻塵勞蘊界生死諸入和合。",
    "X69n1323_001:0008a08_18": "逈然無寄。",
    "X69n1323_001:0008a08_19": "一切不拘。",
    "X69n1323_001:0008a08_20": "去留無閡。",
    "X69n1323_001:0008a08_21": "往來生死。",
    "X69n1323_001:0008a09_0": "如門開相似。",
    "X69n1323_001:0008a10_0": "夫學道人。",
    "X69n1323_001:0008a10_1": "若遇種種苦樂稱意不稱意事。",
    "X69n1323_001:0008a10_2": "心無退屈。",
    "X69n1323_001:0008a11_0": "不念一切名聞利養衣食。",
    "X69n1323_001:0008a11_1": "不貪一切功德利益。",
    "X69n1323_001:0008a11_2": "不為世間諸法之所滯礙。",
    "X69n1323_001:0008a12_3": "無親無愛。",
    "X69n1323_001:0008a12_4": "苦樂平懷。",
    "X69n1323_001:0008a12_5": "麤衣遮寒。",
    "X69n1323_001:0008a13_0": "糲食活命。",
    "X69n1323_001:0008a13_1": "兀兀如愚。",
    "X69n1323_001:0008a13_2": "如聾如啞相似。",
    "X69n1323_001:0008a13_3": "稍有相應分。",
    "X69n1323_001:0008a13_4": "若於心中。",
    "X69n1323_001:0008a14_5": "廣學知解。",
    "X69n1323_001:0008a14_6": "求福求智。",
    "X69n1323_001:0008a14_7": "皆是生死。",
    "X69n1323_001:0008a14_8": "於理為益。",
    "X69n1323_001:0008a14_9": "却被知解境風之所飄溺。",
    "X69n1323_001:0008a15_10": "還歸生死海裏。",
    "X69n1323_001:0008a15_11": "佛是無求。",
    "X69n1323_001:0008a15_12": "人求之理乖。",
    "X69n1323_001:0008a16_13": "理是無求。",
    "X69n1323_001:0008a16_14": "理求之即失。",
    "X69n1323_001:0008a16_15": "若著無求。",
    "X69n1323_001:0008a16_16": "復同於有求。",
    "X69n1323_001:0008a17_17": "若著無為。",
    "X69n1323_001:0008a17_18": "復同於有為。",
    "X69n1323_001:0008a17_19": "故經云。",
    "X69n1323_001:0008a17_20": "不取於法。",
    "X69n1323_001:0008a17_21": "不取非法。",
    "X69n1323_001:0008a18_22": "不取非非法。",
    "X69n1323_001:0008a18_23": "又云。",
    "X69n1323_001:0008a18_24": "如來所得法。",
    "X69n1323_001:0008a18_25": "此法無實亦無虗。",
    "X69n1323_001:0008a19_26": "但能一生心如木石相似。",
    "X69n1323_001:0008a19_27": "不被陰界諸入五欲八風之所飄溺。",
    "X69n1323_001:0008a20_28": "即生死因斷。",
    "X69n1323_001:0008a20_29": "去住自由。",
    "X69n1323_001:0008a20_30": "不為一切有為因果所縛。",
    "X69n1323_001:0008a21_31": "不被有漏所拘。",
    "X69n1323_001:0008a21_32": "他時還以無自縛為因。",
    "X69n1323_001:0008a21_33": "同事利益。",
    "X69n1323_001:0008a22_34": "以無著心。",
    "X69n1323_001:0008a22_35": "應一切物。",
    "X69n1323_001:0008a22_36": "以無礙慧。",
    "X69n1323_001:0008a22_37": "解一切縛。",
    "X69n1323_001:0008a22_38": "亦云應病施藥。",
    "X69n1323_001:0008a24_0": "問。",
    "X69n1323_001:0008a24_1": "如今出家受戒。",
    "X69n1323_001:0008a24_2": "身口清淨。",
    "X69n1323_001:0008a24_3": "已具諸法。",
    "X69n1323_001:0008a24_4": "得解脫否。",
    "X69n1323_001:0008a24_5": "師云。",
    "X69n1323_001:0008b01_6": "少分解脫。",
    "X69n1323_001:0008b01_7": "未得心解脫。",
    "X69n1323_001:0008b01_8": "亦未得一切處解脫。",
    "X69n1323_001:0008b02_0": "問。",
    "X69n1323_001:0008b02_1": "如何是心解脫。",
    "X69n1323_001:0008b02_2": "及一切處解脫。",
    "X69n1323_001:0008b02_3": "師云。",
    "X69n1323_001:0008b02_4": "不求佛。",
    "X69n1323_001:0008b02_5": "不求法。",
    "X69n1323_001:0008b03_6": "不求僧。",
    "X69n1323_001:0008b03_7": "乃至。",
    "X69n1323_001:0008b03_8": "不求福智知解等。",
    "X69n1323_001:0008b03_9": "垢淨情盡。",
    "X69n1323_001:0008b03_10": "亦不守此無求為是。",
    "X69n1323_001:0008b04_11": "亦不住盡處。",
    "X69n1323_001:0008b04_12": "亦不忻天堂畏地獄。",
    "X69n1323_001:0008b04_13": "縛脫無礙。",
    "X69n1323_001:0008b05_14": "即身心及一切處皆名解脫。",
    "X69n1323_001:0008b05_15": "汝莫言有少分戒。",
    "X69n1323_001:0008b06_0": "身口意淨。",
    "X69n1323_001:0008b06_1": "便以為了。",
    "X69n1323_001:0008b06_2": "不知恒沙戒定慧門。",
    "X69n1323_001:0008b06_3": "無漏解脫。",
    "X69n1323_001:0008b07_0": "都未涉一毫毛。",
    "X69n1323_001:0008b07_1": "努力向前。",
    "X69n1323_001:0008b07_2": "須猛究取。",
    "X69n1323_001:0008b07_3": "莫待耳聾眼暗。",
    "X69n1323_001:0008b08_0": "面皺頭白。",
    "X69n1323_001:0008b08_1": "老苦及身。",
    "X69n1323_001:0008b08_2": "悲愛纏綿。",
    "X69n1323_001:0008b08_3": "眼中流淚。",
    "X69n1323_001:0008b08_4": "心裏慞惶。",
    "X69n1323_001:0008b09_0": "一無所據。",
    "X69n1323_001:0008b09_1": "不知去處。",
    "X69n1323_001:0008b09_2": "到恁時節。",
    "X69n1323_001:0008b09_3": "整理手脚不得也。",
    "X69n1323_001:0008b09_4": "縱有福智名聞利養。",
    "X69n1323_001:0008b10_5": "都不相救。",
    "X69n1323_001:0008b10_6": "為心慧未開。",
    "X69n1323_001:0008b10_7": "唯念諸境。",
    "X69n1323_001:0008b11_0": "不知返照。",
    "X69n1323_001:0008b11_1": "復不見佛道。",
    "X69n1323_001:0008b11_2": "一生所有善惡業緣。",
    "X69n1323_001:0008b11_3": "皆悉現前。",
    "X69n1323_001:0008b12_4": "或忻或怖。",
    "X69n1323_001:0008b12_5": "六道五陰。",
    "X69n1323_001:0008b12_6": "俱時現前。",
    "X69n1323_001:0008b12_7": "盡敷嚴好。",
    "X69n1323_001:0008b12_8": "舍宅舟船車轝。",
    "X69n1323_001:0008b13_9": "光明顯赫。",
    "X69n1323_001:0008b13_10": "皆從自心貪愛所現。",
    "X69n1323_001:0008b13_11": "一切惡境。",
    "X69n1323_001:0008b13_12": "皆悉變成殊勝之境。",
    "X69n1323_001:0008b14_13": "但隨貪愛重處。",
    "X69n1323_001:0008b14_14": "業識所引。",
    "X69n1323_001:0008b14_15": "隨著受生。",
    "X69n1323_001:0008b15_16": "都無自由分。",
    "X69n1323_001:0008b15_17": "龍畜良賤。",
    "X69n1323_001:0008b15_18": "都總未定。",
    "X69n1323_001:0008b16_0": "問。",
    "X69n1323_001:0008b16_1": "如何得自由分。",
    "X69n1323_001:0008b16_2": "師云。",
    "X69n1323_001:0008b16_3": "如今得即得。",
    "X69n1323_001:0008b16_4": "或對五欲八風。",
    "X69n1323_001:0008b17_0": "情無取捨。",
    "X69n1323_001:0008b17_1": "慳嫉貪愛。",
    "X69n1323_001:0008b17_2": "我所情盡。",
    "X69n1323_001:0008b17_3": "垢淨俱忘。",
    "X69n1323_001:0008b17_4": "如日月在空。",
    "X69n1323_001:0008b18_5": "不緣而照。",
    "X69n1323_001:0008b18_6": "心心如土木石。",
    "X69n1323_001:0008b18_7": "念念如救頭然。",
    "X69n1323_001:0008b18_8": "亦如大香象渡河截流而過。",
    "X69n1323_001:0008b19_9": "使無疑誤。",
    "X69n1323_001:0008b19_10": "此人。",
    "X69n1323_001:0008b19_11": "天堂地獄。",
    "X69n1323_001:0008b19_12": "俱不能攝也。",
    "X69n1323_001:0008b22_0": "百丈廣錄卷三"
}