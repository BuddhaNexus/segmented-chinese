{
    "X87n1620_005:0210b01_0": "先覺宗乘卷五",
    "X87n1620_005:0210b02_0": "徑山語風老人　圓信　較定",
    "X87n1620_005:0210b03_0": "無地地主人　郭凝之　彚編",
    "X87n1620_005:0210b04_0": "洪州廉使",
    "X87n1620_005:0210b05_0": "洪州廉使。",
    "X87n1620_005:0210b05_1": "逸其名。",
    "X87n1620_005:0210b05_2": "問馬祖曰。",
    "X87n1620_005:0210b05_3": "喫酒肉即是。",
    "X87n1620_005:0210b05_4": "不喫即是。",
    "X87n1620_005:0210b06_0": "馬祖曰。",
    "X87n1620_005:0210b06_1": "若喫是中丞祿。",
    "X87n1620_005:0210b06_2": "不喫是中丞福。",
    "X87n1620_005:0210b06_3": "廉使有省。",
    "X87n1620_005:0210b07_0": "俗士問天堂地獄",
    "X87n1620_005:0210b08_0": "有一俗士。",
    "X87n1620_005:0210b08_1": "問西堂智藏禪師。",
    "X87n1620_005:0210b08_2": "有天堂地獄否。",
    "X87n1620_005:0210b08_3": "師曰有。",
    "X87n1620_005:0210b09_0": "曰有佛法僧寶否。",
    "X87n1620_005:0210b09_1": "師曰有。",
    "X87n1620_005:0210b09_2": "更有多問。",
    "X87n1620_005:0210b09_3": "盡答言有。",
    "X87n1620_005:0210b09_4": "曰和尚恁麼道。",
    "X87n1620_005:0210b10_5": "莫錯否。",
    "X87n1620_005:0210b10_6": "師曰。",
    "X87n1620_005:0210b10_7": "汝曾見尊宿來耶。",
    "X87n1620_005:0210b10_8": "曰某甲曾參徑山和尚來。",
    "X87n1620_005:0210b11_9": "師曰。",
    "X87n1620_005:0210b11_10": "徑山向汝作麼生道。",
    "X87n1620_005:0210b11_11": "曰他道一切總無。",
    "X87n1620_005:0210b12_12": "師曰。",
    "X87n1620_005:0210b12_13": "汝有妻否。",
    "X87n1620_005:0210b12_14": "曰有。",
    "X87n1620_005:0210b12_15": "師曰。",
    "X87n1620_005:0210b12_16": "徑山和尚有妻否。",
    "X87n1620_005:0210b13_0": "曰無。",
    "X87n1620_005:0210b13_1": "師曰。",
    "X87n1620_005:0210b13_2": "徑山和尚道無即得。",
    "X87n1620_005:0210b14_0": "歸宗因官人來問",
    "X87n1620_005:0210b15_0": "廬山歸宗智常禪師。",
    "X87n1620_005:0210b15_1": "因官人來。",
    "X87n1620_005:0210b15_2": "乃拈起帽子兩帶曰還會麼。",
    "X87n1620_005:0210b16_3": "曰不會。",
    "X87n1620_005:0210b16_4": "歸宗曰。",
    "X87n1620_005:0210b16_5": "莫怪老僧頭風。",
    "X87n1620_005:0210b16_6": "不卸帽子。",
    "X87n1620_005:0210b17_0": "儒者問三教",
    "X87n1620_005:0210b18_0": "有儒者。",
    "X87n1620_005:0210b18_1": "忘其名。",
    "X87n1620_005:0210b18_2": "問大珠海禪師。",
    "X87n1620_005:0210b18_3": "儒釋道三教。",
    "X87n1620_005:0210b18_4": "同異如何。",
    "X87n1620_005:0210b19_5": "師曰。",
    "X87n1620_005:0210b19_6": "大量者用之則同。",
    "X87n1620_005:0210b19_7": "小機者執之即異。",
    "X87n1620_005:0210b19_8": "總從一性起用。",
    "X87n1620_005:0210b20_9": "機見差別成三。",
    "X87n1620_005:0210b20_10": "迷悟由人。",
    "X87n1620_005:0210b20_11": "不在教之同異也。",
    "X87n1620_005:0210b21_0": "行者問即心即佛",
    "X87n1620_005:0210b22_0": "有行者。",
    "X87n1620_005:0210b22_1": "問大珠曰。",
    "X87n1620_005:0210b22_2": "即心即佛。",
    "X87n1620_005:0210b22_3": "那個是佛。",
    "X87n1620_005:0210b22_4": "大珠曰。",
    "X87n1620_005:0210b22_5": "汝疑那個不是佛。",
    "X87n1620_005:0210b23_6": "指出看。",
    "X87n1620_005:0210b23_7": "行者無對。",
    "X87n1620_005:0210b23_8": "大珠曰。",
    "X87n1620_005:0210b23_9": "達即徧境是。",
    "X87n1620_005:0210b24_0": "不悟永乖疎。",
    "X87n1620_005:0210c01_0": "丹霞逢老人與童子",
    "X87n1620_005:0210c02_0": "丹霞因去馬祖處。",
    "X87n1620_005:0210c02_1": "路逢一老人。",
    "X87n1620_005:0210c02_2": "與一童子。",
    "X87n1620_005:0210c02_3": "丹霞問。",
    "X87n1620_005:0210c02_4": "公住何處。",
    "X87n1620_005:0210c03_5": "老人曰。",
    "X87n1620_005:0210c03_6": "上是天。",
    "X87n1620_005:0210c03_7": "下是地。",
    "X87n1620_005:0210c03_8": "丹霞曰。",
    "X87n1620_005:0210c03_9": "忽遇天崩地陷。",
    "X87n1620_005:0210c04_10": "又作麼生。",
    "X87n1620_005:0210c04_11": "老人曰。",
    "X87n1620_005:0210c04_12": "蒼天蒼天。",
    "X87n1620_005:0210c04_13": "童子噓一聲。",
    "X87n1620_005:0210c04_14": "丹霞曰。",
    "X87n1620_005:0210c05_0": "非父不生其子。",
    "X87n1620_005:0210c05_1": "老人便與童子入山去。",
    "X87n1620_005:0210c06_0": "丹霞會留守",
    "X87n1620_005:0210c07_0": "丹霞於天津橋橫臥。",
    "X87n1620_005:0210c07_1": "會留守鄭公出。",
    "X87n1620_005:0210c07_2": "呵之不起。",
    "X87n1620_005:0210c07_3": "吏問其故。",
    "X87n1620_005:0210c08_4": "丹霞徐曰。",
    "X87n1620_005:0210c08_5": "無事僧。",
    "X87n1620_005:0210c08_6": "留守異之。",
    "X87n1620_005:0210c09_0": "百丈政路逢官人",
    "X87n1620_005:0210c10_0": "洪州百丈山惟政禪師。",
    "X87n1620_005:0210c10_1": "因入京。",
    "X87n1620_005:0210c10_2": "路逢官人喫飯。",
    "X87n1620_005:0210c10_3": "忽見驢鳴。",
    "X87n1620_005:0210c11_4": "官人召曰。",
    "X87n1620_005:0210c11_5": "頭陀。",
    "X87n1620_005:0210c11_6": "師舉頭。",
    "X87n1620_005:0210c11_7": "官人却指驢。",
    "X87n1620_005:0210c11_8": "師却指官人(法眼別云。",
    "X87n1620_005:0210c12_9": "但作驢鳴　天奇拈云。",
    "X87n1620_005:0210c12_10": "混俗和光。",
    "X87n1620_005:0210c12_11": "何妨異類橫身。",
    "X87n1620_005:0210c12_12": "絲毫不掛。",
    "X87n1620_005:0210c12_13": "那容竪拂敲床。",
    "X87n1620_005:0210c12_14": "大丈夫漢。",
    "X87n1620_005:0210c12_15": "莫覰東魯西晉。",
    "X87n1620_005:0210c13_16": "休談北狄南蠻。",
    "X87n1620_005:0210c13_17": "方見得出岫靈雲。",
    "X87n1620_005:0210c13_18": "然後却來。",
    "X87n1620_005:0210c13_19": "嘲三囉四。",
    "X87n1620_005:0210c13_20": "又且何如)。",
    "X87n1620_005:0210c14_0": "趙州與官人遊園",
    "X87n1620_005:0210c15_0": "趙州與官人遊園次。",
    "X87n1620_005:0210c15_1": "兔見乃驚走。",
    "X87n1620_005:0210c15_2": "遂問。",
    "X87n1620_005:0210c15_3": "和尚是大善知識。",
    "X87n1620_005:0210c16_4": "兔見為甚麼走。",
    "X87n1620_005:0210c16_5": "趙州曰。",
    "X87n1620_005:0210c16_6": "老僧好殺。",
    "X87n1620_005:0210c17_0": "官人問趙州",
    "X87n1620_005:0210c18_0": "官人問趙州。",
    "X87n1620_005:0210c18_1": "和尚還入地獄否。",
    "X87n1620_005:0210c18_2": "趙州曰。",
    "X87n1620_005:0210c18_3": "老僧末上入。",
    "X87n1620_005:0210c19_0": "曰大善知識。",
    "X87n1620_005:0210c19_1": "為甚麼入地獄。",
    "X87n1620_005:0210c19_2": "趙州曰。",
    "X87n1620_005:0210c19_3": "老僧若不入。",
    "X87n1620_005:0210c19_4": "阿誰教化汝。",
    "X87n1620_005:0210c21_0": "官人問趙州燒木佛",
    "X87n1620_005:0210c22_0": "官人問趙州曰。",
    "X87n1620_005:0210c22_1": "丹霞燒木佛。",
    "X87n1620_005:0210c22_2": "院主為甚麼眉鬢墮落。",
    "X87n1620_005:0210c23_0": "趙州曰。",
    "X87n1620_005:0210c23_1": "官人宅內變生作熟。",
    "X87n1620_005:0210c23_2": "是甚麼人。",
    "X87n1620_005:0210c23_3": "官人曰。",
    "X87n1620_005:0210c23_4": "所使。",
    "X87n1620_005:0210c24_0": "趙州曰。",
    "X87n1620_005:0210c24_1": "却是他好手。",
    "X87n1620_005:0211a01_0": "俗官問趙州",
    "X87n1620_005:0211a02_0": "有俗官。",
    "X87n1620_005:0211a02_1": "問趙州。",
    "X87n1620_005:0211a02_2": "佛在日。",
    "X87n1620_005:0211a02_3": "一切眾生歸依佛。",
    "X87n1620_005:0211a02_4": "佛滅度後。",
    "X87n1620_005:0211a03_0": "一切眾生歸依什麼處。",
    "X87n1620_005:0211a03_1": "趙州曰。",
    "X87n1620_005:0211a03_2": "未有眾生。",
    "X87n1620_005:0211a03_3": "曰現問次。",
    "X87n1620_005:0211a04_0": "趙州曰。",
    "X87n1620_005:0211a04_1": "更覓什麼佛。",
    "X87n1620_005:0211a05_0": "秀才乞拄杖",
    "X87n1620_005:0211a06_0": "有秀才。",
    "X87n1620_005:0211a06_1": "見趙州手中拄杖。",
    "X87n1620_005:0211a06_2": "乃曰。",
    "X87n1620_005:0211a06_3": "佛不奪眾生願。",
    "X87n1620_005:0211a06_4": "是否。",
    "X87n1620_005:0211a07_0": "趙州曰是。",
    "X87n1620_005:0211a07_1": "秀才曰。",
    "X87n1620_005:0211a07_2": "某甲就和尚。",
    "X87n1620_005:0211a07_3": "乞取手中拄杖。",
    "X87n1620_005:0211a07_4": "得否。",
    "X87n1620_005:0211a08_0": "趙州曰。",
    "X87n1620_005:0211a08_1": "君子不奪人所好。",
    "X87n1620_005:0211a08_2": "秀才曰。",
    "X87n1620_005:0211a08_3": "某甲不是君子。",
    "X87n1620_005:0211a08_4": "趙州曰。",
    "X87n1620_005:0211a09_5": "老僧亦不是佛。",
    "X87n1620_005:0211a10_0": "秀才問趙州",
    "X87n1620_005:0211a11_0": "有秀才。",
    "X87n1620_005:0211a11_1": "辭趙州曰。",
    "X87n1620_005:0211a11_2": "某甲在此括撓和尚多時。",
    "X87n1620_005:0211a11_3": "無可報答。",
    "X87n1620_005:0211a12_4": "待他日作一頭驢來。",
    "X87n1620_005:0211a12_5": "報答和尚。",
    "X87n1620_005:0211a12_6": "趙州曰。",
    "X87n1620_005:0211a12_7": "教老僧爭得鞍。",
    "X87n1620_005:0211a13_8": "又秀才見趙州。",
    "X87n1620_005:0211a13_9": "乃讚歎曰。",
    "X87n1620_005:0211a13_10": "和尚是古佛。",
    "X87n1620_005:0211a13_11": "趙州曰。",
    "X87n1620_005:0211a14_0": "秀才是新如來。",
    "X87n1620_005:0211a15_0": "俗士獻袈裟",
    "X87n1620_005:0211a16_0": "有俗士。",
    "X87n1620_005:0211a16_1": "獻袈裟。",
    "X87n1620_005:0211a16_2": "問曰。",
    "X87n1620_005:0211a16_3": "披與麼衣服。",
    "X87n1620_005:0211a16_4": "莫辜負古人也無。",
    "X87n1620_005:0211a17_0": "趙州拋下拂子曰。",
    "X87n1620_005:0211a17_1": "是古是今。",
    "X87n1620_005:0211a18_0": "趙州勘行者",
    "X87n1620_005:0211a19_0": "趙州聞行者勘僧曰。",
    "X87n1620_005:0211a19_1": "我有十貫錢。",
    "X87n1620_005:0211a19_2": "若有人下得一轉語。",
    "X87n1620_005:0211a20_3": "即捨此錢。",
    "X87n1620_005:0211a20_4": "有人下語。",
    "X87n1620_005:0211a20_5": "並不契。",
    "X87n1620_005:0211a20_6": "趙州遂往行者家。",
    "X87n1620_005:0211a20_7": "行者曰。",
    "X87n1620_005:0211a21_8": "若下得一轉語。",
    "X87n1620_005:0211a21_9": "即捨此錢。",
    "X87n1620_005:0211a21_10": "趙州戴笠子便行(瑯琊覺云。",
    "X87n1620_005:0211a22_11": "武帝求仙不得仙。",
    "X87n1620_005:0211a22_12": "王喬端坐却昇天)。",
    "X87n1620_005:0211a23_0": "秀才問長沙岑",
    "X87n1620_005:0211a24_0": "有秀才。",
    "X87n1620_005:0211a24_1": "看千佛名經。",
    "X87n1620_005:0211a24_2": "問長沙岑禪師曰。",
    "X87n1620_005:0211a24_3": "百千諸佛。",
    "X87n1620_005:0211a24_4": "但見其名。",
    "X87n1620_005:0211b01_5": "未審居何國土。",
    "X87n1620_005:0211b01_6": "還化物也無。",
    "X87n1620_005:0211b01_7": "長沙曰。",
    "X87n1620_005:0211b01_8": "黃鶴樓崔顥題後。",
    "X87n1620_005:0211b02_9": "秀才還曾題也未。",
    "X87n1620_005:0211b02_10": "曰未曾。",
    "X87n1620_005:0211b02_11": "長沙曰。",
    "X87n1620_005:0211b02_12": "得閑題取一篇好(黃龍新頌云。",
    "X87n1620_005:0211b03_13": "黃鶴樓前法戰時。",
    "X87n1620_005:0211b03_14": "百千諸佛竪降旗。",
    "X87n1620_005:0211b03_15": "問渠國土歸何處。",
    "X87n1620_005:0211b03_16": "贏得多才一首詩　圓悟勤拈云。",
    "X87n1620_005:0211b04_17": "驀刀劈面。",
    "X87n1620_005:0211b04_18": "解辨者何人。",
    "X87n1620_005:0211b04_19": "劈箭當胷。",
    "X87n1620_005:0211b04_20": "承當者有幾。",
    "X87n1620_005:0211b04_21": "若能向奔流度刀。",
    "X87n1620_005:0211b04_22": "疾燄過風處。",
    "X87n1620_005:0211b04_23": "見長沙。",
    "X87n1620_005:0211b04_24": "橫身為物去。",
    "X87n1620_005:0211b05_25": "不消一揑。",
    "X87n1620_005:0211b05_26": "其或隨言詮入露布。",
    "X87n1620_005:0211b05_27": "便謂問東答西。",
    "X87n1620_005:0211b05_28": "裂轉話頭。",
    "X87n1620_005:0211b05_29": "且作麼生是長沙端的處。",
    "X87n1620_005:0211b05_30": "還委悉麼。",
    "X87n1620_005:0211b05_31": "殺人刀活人劒　語風信拈云。",
    "X87n1620_005:0211b06_32": "可惜一座黃鶴樓。",
    "X87n1620_005:0211b06_33": "被長沙和尚埋沒殺。",
    "X87n1620_005:0211b06_34": "千佛名經裏許。",
    "X87n1620_005:0211b06_35": "喚作註解得麼。",
    "X87n1620_005:0211b06_36": "癡人面前。",
    "X87n1620_005:0211b06_37": "勿得說夢。",
    "X87n1620_005:0211b07_38": "頌云。",
    "X87n1620_005:0211b07_39": "塞雁一聲睺舌冷。",
    "X87n1620_005:0211b07_40": "棲棲蘆苗月明中。",
    "X87n1620_005:0211b07_41": "荒塘踪跡無漁火。",
    "X87n1620_005:0211b07_42": "徒有秋烟拂暗風)。",
    "X87n1620_005:0211b08_0": "普化見步使",
    "X87n1620_005:0211b09_0": "鎮州普化和尚。",
    "X87n1620_005:0211b09_1": "見馬步使出喝道。",
    "X87n1620_005:0211b09_2": "普化亦喝道。",
    "X87n1620_005:0211b09_3": "作相撲勢。",
    "X87n1620_005:0211b10_4": "步使令人打五棒。",
    "X87n1620_005:0211b10_5": "普化曰。",
    "X87n1620_005:0211b10_6": "似即似。",
    "X87n1620_005:0211b10_7": "是即不是。",
    "X87n1620_005:0211b11_0": "天使問睦州",
    "X87n1620_005:0211b12_0": "有天使。",
    "X87n1620_005:0211b12_1": "問睦州。",
    "X87n1620_005:0211b12_2": "三門俱開。",
    "X87n1620_005:0211b12_3": "從那門入。",
    "X87n1620_005:0211b12_4": "睦州喚尚書。",
    "X87n1620_005:0211b12_5": "天使應諾。",
    "X87n1620_005:0211b13_6": "睦州曰。",
    "X87n1620_005:0211b13_7": "從信門入。",
    "X87n1620_005:0211b13_8": "天使又見畵壁。",
    "X87n1620_005:0211b13_9": "問曰。",
    "X87n1620_005:0211b13_10": "二尊者對譚何事。",
    "X87n1620_005:0211b14_11": "睦州摑露柱曰。",
    "X87n1620_005:0211b14_12": "三身中。",
    "X87n1620_005:0211b14_13": "那箇不說法。",
    "X87n1620_005:0211b15_0": "秀才訪睦州",
    "X87n1620_005:0211b16_0": "一秀才訪睦州。",
    "X87n1620_005:0211b16_1": "稱會二十四家書。",
    "X87n1620_005:0211b16_2": "睦州以拄杖空中點一點曰。",
    "X87n1620_005:0211b17_3": "會麼。",
    "X87n1620_005:0211b17_4": "秀才罔措。",
    "X87n1620_005:0211b17_5": "睦州曰。",
    "X87n1620_005:0211b17_6": "又道會二十四家書。",
    "X87n1620_005:0211b18_7": "永字八法也不識。",
    "X87n1620_005:0211b19_0": "睦州問秀才",
    "X87n1620_005:0211b20_0": "睦州問秀才。",
    "X87n1620_005:0211b20_1": "治甚經。",
    "X87n1620_005:0211b20_2": "曰治易。",
    "X87n1620_005:0211b20_3": "睦州曰。",
    "X87n1620_005:0211b20_4": "易中道。",
    "X87n1620_005:0211b20_5": "百姓日用而不知。",
    "X87n1620_005:0211b21_6": "且道不知箇甚麼。",
    "X87n1620_005:0211b21_7": "曰不知其道。",
    "X87n1620_005:0211b21_8": "睦州曰。",
    "X87n1620_005:0211b21_9": "作麼生是道。",
    "X87n1620_005:0211b22_10": "秀才無對。",
    "X87n1620_005:0211b22_11": "睦州曰。",
    "X87n1620_005:0211b22_12": "果然不知(妙喜云。",
    "X87n1620_005:0211b22_13": "秀才雖然無語。",
    "X87n1620_005:0211b22_14": "默契睦州。",
    "X87n1620_005:0211b23_15": "只是少末後一着。",
    "X87n1620_005:0211b23_16": "徑山當時若見睦州道果然不知。",
    "X87n1620_005:0211b23_17": "但撫掌呵呵大笑。",
    "X87n1620_005:0211b23_18": "管取睦州不相虧)。",
    "X87n1620_005:0211b24_0": "閩帥問壽山年多少",
    "X87n1620_005:0211c01_0": "閩帥問。",
    "X87n1620_005:0211c01_1": "壽山年多少。",
    "X87n1620_005:0211c01_2": "師曰。",
    "X87n1620_005:0211c01_3": "與虗空齊年。",
    "X87n1620_005:0211c01_4": "曰虗空年多少。",
    "X87n1620_005:0211c02_5": "師曰。",
    "X87n1620_005:0211c02_6": "與壽山齊年。",
    "X87n1620_005:0211c03_0": "有俗士舉手",
    "X87n1620_005:0211c04_0": "益州西睦和尚。",
    "X87n1620_005:0211c04_1": "上堂。",
    "X87n1620_005:0211c04_2": "有俗士舉手曰。",
    "X87n1620_005:0211c04_3": "和尚便是一頭驢。",
    "X87n1620_005:0211c05_4": "師曰。",
    "X87n1620_005:0211c05_5": "老僧被汝騎。",
    "X87n1620_005:0211c05_6": "士無語去。",
    "X87n1620_005:0211c05_7": "後三日再來。",
    "X87n1620_005:0211c05_8": "白言。",
    "X87n1620_005:0211c05_9": "某甲三日前著賊。",
    "X87n1620_005:0211c06_10": "師拈杖趂出。",
    "X87n1620_005:0211c07_0": "俗士問殺牛",
    "X87n1620_005:0211c08_0": "有俗士。",
    "X87n1620_005:0211c08_1": "問慧覺。",
    "X87n1620_005:0211c08_2": "某甲平生殺牛。",
    "X87n1620_005:0211c08_3": "還有罪否。",
    "X87n1620_005:0211c08_4": "慧覺曰。",
    "X87n1620_005:0211c08_5": "無罪。",
    "X87n1620_005:0211c09_6": "曰為甚麼無罪。",
    "X87n1620_005:0211c09_7": "慧覺曰。",
    "X87n1620_005:0211c09_8": "殺一個還一個。",
    "X87n1620_005:0211c10_0": "仰山問推官",
    "X87n1620_005:0211c11_0": "有官人。",
    "X87n1620_005:0211c11_1": "訪仰山。",
    "X87n1620_005:0211c11_2": "仰山問。",
    "X87n1620_005:0211c11_3": "官居何位。",
    "X87n1620_005:0211c11_4": "曰推官。",
    "X87n1620_005:0211c11_5": "仰山竪起拂子曰。",
    "X87n1620_005:0211c12_6": "還推得這箇麼。",
    "X87n1620_005:0211c12_7": "官人無對。",
    "X87n1620_005:0211c12_8": "仰山令眾下語。",
    "X87n1620_005:0211c12_9": "皆不契。",
    "X87n1620_005:0211c13_10": "時三聖不安。",
    "X87n1620_005:0211c13_11": "在涅槃堂內將息。",
    "X87n1620_005:0211c13_12": "仰山令侍者去請下語。",
    "X87n1620_005:0211c14_13": "三聖曰。",
    "X87n1620_005:0211c14_14": "但道和尚今日有事。",
    "X87n1620_005:0211c14_15": "仰山又令侍者問。",
    "X87n1620_005:0211c15_16": "未審有甚麼事。",
    "X87n1620_005:0211c15_17": "三聖曰。",
    "X87n1620_005:0211c15_18": "再犯不容。",
    "X87n1620_005:0211c16_0": "行者問霍山",
    "X87n1620_005:0211c17_0": "有行者。",
    "X87n1620_005:0211c17_1": "問霍山景通禪師曰。",
    "X87n1620_005:0211c17_2": "如何是佛法大意。",
    "X87n1620_005:0211c17_3": "霍山乃禮拜。",
    "X87n1620_005:0211c18_4": "行者曰。",
    "X87n1620_005:0211c18_5": "和尚為甚麼禮俗人。",
    "X87n1620_005:0211c18_6": "霍山曰。",
    "X87n1620_005:0211c18_7": "汝不見道尊重弟子。",
    "X87n1620_005:0211c20_0": "洞山行脚遇官人",
    "X87n1620_005:0211c21_0": "洞山行脚次。",
    "X87n1620_005:0211c21_1": "有官人問曰。",
    "X87n1620_005:0211c21_2": "我要註三祖信心銘。",
    "X87n1620_005:0211c21_3": "得否。",
    "X87n1620_005:0211c22_0": "洞山曰。",
    "X87n1620_005:0211c22_1": "只如纔有是非紛然失心。",
    "X87n1620_005:0211c22_2": "作麼生註(楚石琦代云。",
    "X87n1620_005:0211c22_3": "裝香着)。",
    "X87n1620_005:0211c24_0": "官人問洞山",
    "X87n1620_005:0212a01_0": "官人問洞山。",
    "X87n1620_005:0212a01_1": "有人修行否。",
    "X87n1620_005:0212a01_2": "洞山曰。",
    "X87n1620_005:0212a01_3": "待公作男子即修行。",
    "X87n1620_005:0212a03_0": "投子赴檀越齋",
    "X87n1620_005:0212a04_0": "舒州投子山大同禪師。",
    "X87n1620_005:0212a04_1": "在京赴一檀越齋。",
    "X87n1620_005:0212a04_2": "檀越將一盤草來。",
    "X87n1620_005:0212a05_3": "師拳兩手安頭上。",
    "X87n1620_005:0212a05_4": "檀越便將齋來。",
    "X87n1620_005:0212a05_5": "後有僧問。",
    "X87n1620_005:0212a06_0": "和尚在京投齋。",
    "X87n1620_005:0212a06_1": "意旨何如。",
    "X87n1620_005:0212a06_2": "師曰。",
    "X87n1620_005:0212a06_3": "觀世音菩薩。",
    "X87n1620_005:0212a07_0": "有官人問壽州",
    "X87n1620_005:0212a08_0": "壽州紹宗禪師。",
    "X87n1620_005:0212a08_1": "有官人謂師曰。",
    "X87n1620_005:0212a08_2": "見說江西不立宗。",
    "X87n1620_005:0212a08_3": "師曰。",
    "X87n1620_005:0212a09_4": "遇緣即立。",
    "X87n1620_005:0212a09_5": "曰遇緣立箇甚麼。",
    "X87n1620_005:0212a09_6": "師曰。",
    "X87n1620_005:0212a09_7": "江西不立宗。",
    "X87n1620_005:0212a10_0": "閩王問雪峰存",
    "X87n1620_005:0212a11_0": "閩王。",
    "X87n1620_005:0212a11_1": "問雪峰義存禪師曰。",
    "X87n1620_005:0212a11_2": "擬欲葢一所佛殿去時如何。",
    "X87n1620_005:0212a12_3": "雪峰曰。",
    "X87n1620_005:0212a12_4": "何不葢取一所空王殿。",
    "X87n1620_005:0212a12_5": "曰請師樣子。",
    "X87n1620_005:0212a12_6": "雪峰展兩手(雲門云。",
    "X87n1620_005:0212a13_7": "一舉四十九)。",
    "X87n1620_005:0212a14_0": "閩王封柑橘至雪峰",
    "X87n1620_005:0212a15_0": "雪峰因閩王封柑橘各一顆。",
    "X87n1620_005:0212a15_1": "遣使送至。",
    "X87n1620_005:0212a15_2": "柬問。",
    "X87n1620_005:0212a15_3": "既是一般顏色。",
    "X87n1620_005:0212a16_4": "為甚麼名字不同。",
    "X87n1620_005:0212a16_5": "雪峰遂依舊封回。",
    "X87n1620_005:0212a16_6": "王復馳問玄沙。",
    "X87n1620_005:0212a17_7": "玄沙將一張紙葢却。",
    "X87n1620_005:0212a18_0": "廣主請雲門開堂",
    "X87n1620_005:0212a19_0": "廣主。",
    "X87n1620_005:0212a19_1": "請雲門出世靈樹。",
    "X87n1620_005:0212a19_2": "開堂日。",
    "X87n1620_005:0212a19_3": "廣主親臨曰。",
    "X87n1620_005:0212a19_4": "弟子請益。",
    "X87n1620_005:0212a20_5": "雲門曰。",
    "X87n1620_005:0212a20_6": "目前無異路(法眼別云。",
    "X87n1620_005:0212a20_7": "不可無益于人)。",
    "X87n1620_005:0212a21_0": "常侍問雲門",
    "X87n1620_005:0212a22_0": "雲門。",
    "X87n1620_005:0212a22_1": "在文德殿赴齋。",
    "X87n1620_005:0212a22_2": "有常侍問。",
    "X87n1620_005:0212a22_3": "靈樹菓子熟也未。",
    "X87n1620_005:0212a22_4": "雲門曰。",
    "X87n1620_005:0212a23_5": "甚麼年中得信道生。",
    "X87n1620_005:0212a24_0": "官人問雲門",
    "X87n1620_005:0212b01_0": "雲門行脚時。",
    "X87n1620_005:0212b01_1": "有官人問。",
    "X87n1620_005:0212b01_2": "還有定乾坤底句麼。",
    "X87n1620_005:0212b01_3": "雲門曰。",
    "X87n1620_005:0212b02_0": "蘇嚕蘇嚕悉哩薩訶。",
    "X87n1620_005:0212b03_0": "閩王送玄沙上船",
    "X87n1620_005:0212b04_0": "閩王。",
    "X87n1620_005:0212b04_1": "送玄沙備禪師上船。",
    "X87n1620_005:0212b04_2": "師扣船召曰。",
    "X87n1620_005:0212b04_3": "大王爭能出得這裏去。",
    "X87n1620_005:0212b05_4": "王曰。",
    "X87n1620_005:0212b05_5": "在裏許得多少時也(歸宗柔別云。",
    "X87n1620_005:0212b05_6": "不因和尚。",
    "X87n1620_005:0212b05_7": "不得到這裡)。",
    "X87n1620_005:0212b07_0": "泉守請玄沙登樓",
    "X87n1620_005:0212b08_0": "泉守王公。",
    "X87n1620_005:0212b08_1": "請玄沙登樓。",
    "X87n1620_005:0212b08_2": "先語客司曰。",
    "X87n1620_005:0212b08_3": "待我引大師到樓前。",
    "X87n1620_005:0212b09_4": "便舁却梯。",
    "X87n1620_005:0212b09_5": "客司稟旨。",
    "X87n1620_005:0212b09_6": "公曰。",
    "X87n1620_005:0212b09_7": "請大師登樓。",
    "X87n1620_005:0212b09_8": "玄沙視樓。",
    "X87n1620_005:0212b10_9": "復視其人。",
    "X87n1620_005:0212b10_10": "乃曰。",
    "X87n1620_005:0212b10_11": "佛法不是此道理。",
    "X87n1620_005:0212b10_12": "(法眼云。",
    "X87n1620_005:0212b10_13": "未舁梯時。",
    "X87n1620_005:0212b10_14": "日幾度登樓)玄沙與泉守。",
    "X87n1620_005:0212b11_15": "在室中說話。",
    "X87n1620_005:0212b11_16": "有一沙彌。",
    "X87n1620_005:0212b11_17": "揭簾入見。",
    "X87n1620_005:0212b11_18": "却退步而出。",
    "X87n1620_005:0212b12_19": "玄沙曰。",
    "X87n1620_005:0212b12_20": "那沙彌好與二十拄杖。",
    "X87n1620_005:0212b12_21": "守曰。",
    "X87n1620_005:0212b12_22": "恁麼即某甲罪過。",
    "X87n1620_005:0212b13_23": "(同安顯別云。",
    "X87n1620_005:0212b13_24": "祖師來也)玄沙曰。",
    "X87n1620_005:0212b13_25": "佛法不是恁麼(鏡清云。",
    "X87n1620_005:0212b13_26": "不為打水。",
    "X87n1620_005:0212b14_27": "有僧問。",
    "X87n1620_005:0212b14_28": "不為打水。",
    "X87n1620_005:0212b14_29": "意作麼生。",
    "X87n1620_005:0212b14_30": "鏡清云。",
    "X87n1620_005:0212b14_31": "青山碾為塵。",
    "X87n1620_005:0212b14_32": "敢保沒閑人)。",
    "X87n1620_005:0212b15_0": "閩帥請辨驗聲明三藏",
    "X87n1620_005:0212b16_0": "西天有聲明三藏至。",
    "X87n1620_005:0212b16_1": "閩帥請玄沙辨驗。",
    "X87n1620_005:0212b16_2": "玄沙以鐵火筯。",
    "X87n1620_005:0212b17_3": "敲銅爐問。",
    "X87n1620_005:0212b17_4": "是甚麼聲。",
    "X87n1620_005:0212b17_5": "三藏曰。",
    "X87n1620_005:0212b17_6": "銅鐵聲。",
    "X87n1620_005:0212b17_7": "(法眼別云。",
    "X87n1620_005:0212b17_8": "請大師為大王。",
    "X87n1620_005:0212b18_0": "法燈別云。",
    "X87n1620_005:0212b18_1": "聽和尚問)玄沙曰。",
    "X87n1620_005:0212b18_2": "大王莫受外國人謾。",
    "X87n1620_005:0212b18_3": "三藏無對(法眼代云。",
    "X87n1620_005:0212b19_4": "大師久受大王供養。",
    "X87n1620_005:0212b19_5": "法燈代云。",
    "X87n1620_005:0212b19_6": "却是和尚謾大王)。",
    "X87n1620_005:0212b20_0": "閩帥問鼓山晏",
    "X87n1620_005:0212b21_0": "閩帥入萬歲寺。",
    "X87n1620_005:0212b21_1": "瞻仰佛像。",
    "X87n1620_005:0212b21_2": "指問鼓山曰。",
    "X87n1620_005:0212b21_3": "是甚麼佛。",
    "X87n1620_005:0212b21_4": "鼓山曰。",
    "X87n1620_005:0212b22_5": "請大王鑒。",
    "X87n1620_005:0212b22_6": "帥曰。",
    "X87n1620_005:0212b22_7": "鑒即不是佛。",
    "X87n1620_005:0212b22_8": "鼓山曰。",
    "X87n1620_005:0212b22_9": "是甚麼。",
    "X87n1620_005:0212b22_10": "帥無對(長慶代云。",
    "X87n1620_005:0212b23_11": "久承大師在眾。",
    "X87n1620_005:0212b23_12": "何得造次)。",
    "X87n1620_005:0212b24_0": "行者至菴",
    "X87n1620_005:0212c01_0": "鏡清怤禪師。",
    "X87n1620_005:0212c01_1": "住菴時。",
    "X87n1620_005:0212c01_2": "有行者至。",
    "X87n1620_005:0212c01_3": "徐徐近牀。",
    "X87n1620_005:0212c01_4": "取拂子提起問。",
    "X87n1620_005:0212c02_5": "某甲喚這箇作拂子。",
    "X87n1620_005:0212c02_6": "庵主喚作甚麼。",
    "X87n1620_005:0212c02_7": "鏡清曰。",
    "X87n1620_005:0212c02_8": "不可更安名立字也。",
    "X87n1620_005:0212c03_9": "行者乃擲却拂子曰。",
    "X87n1620_005:0212c03_10": "著甚死急。",
    "X87n1620_005:0212c04_0": "童子見鏡清",
    "X87n1620_005:0212c05_0": "有僧引一童子。",
    "X87n1620_005:0212c05_1": "到鏡清曰。",
    "X87n1620_005:0212c05_2": "此童子常愛問人佛法。",
    "X87n1620_005:0212c05_3": "請和尚驗看。",
    "X87n1620_005:0212c06_4": "鏡清乃令點茶。",
    "X87n1620_005:0212c06_5": "童子點茶來。",
    "X87n1620_005:0212c06_6": "師啜了。",
    "X87n1620_005:0212c06_7": "過盞槖與童子。",
    "X87n1620_005:0212c07_8": "童子近前接。",
    "X87n1620_005:0212c07_9": "鏡清却縮手曰。",
    "X87n1620_005:0212c07_10": "還道得麼。",
    "X87n1620_005:0212c07_11": "童子曰。",
    "X87n1620_005:0212c08_12": "問將來。",
    "X87n1620_005:0212c08_13": "(法眼別云。",
    "X87n1620_005:0212c08_14": "和尚更喫茶否)僧曰。",
    "X87n1620_005:0212c08_15": "此童子見解如何。",
    "X87n1620_005:0212c08_16": "鏡清曰。",
    "X87n1620_005:0212c09_17": "也祇一兩生持戒僧。",
    "X87n1620_005:0212c10_0": "俗士問靜上座",
    "X87n1620_005:0212c11_0": "有俗士。",
    "X87n1620_005:0212c11_1": "失其名。",
    "X87n1620_005:0212c11_2": "問靜上座曰。",
    "X87n1620_005:0212c11_3": "弟子每當夜坐。",
    "X87n1620_005:0212c11_4": "心念紛飛。",
    "X87n1620_005:0212c12_5": "未明攝伏之方。",
    "X87n1620_005:0212c12_6": "願垂示誨。",
    "X87n1620_005:0212c12_7": "上座曰。",
    "X87n1620_005:0212c12_8": "如或夜間安坐。",
    "X87n1620_005:0212c13_0": "心念紛飛。",
    "X87n1620_005:0212c13_1": "却將紛飛之心。",
    "X87n1620_005:0212c13_2": "以究紛飛之處。",
    "X87n1620_005:0212c13_3": "究之無處。",
    "X87n1620_005:0212c14_0": "則紛飛之念何存。",
    "X87n1620_005:0212c14_1": "反究究心。",
    "X87n1620_005:0212c14_2": "則能究之心安在。",
    "X87n1620_005:0212c14_3": "又能照之智本空。",
    "X87n1620_005:0212c15_4": "所照之境亦寂。",
    "X87n1620_005:0212c15_5": "寂而非寂者。",
    "X87n1620_005:0212c15_6": "葢無能寂之人也。",
    "X87n1620_005:0212c16_7": "照而非照者。",
    "X87n1620_005:0212c16_8": "葢無所照之境也。",
    "X87n1620_005:0212c16_9": "境智俱寂。",
    "X87n1620_005:0212c16_10": "心慮安然。",
    "X87n1620_005:0212c17_11": "外不尋枝。",
    "X87n1620_005:0212c17_12": "內不住定。",
    "X87n1620_005:0212c17_13": "二途俱泯。",
    "X87n1620_005:0212c17_14": "一性怡然。",
    "X87n1620_005:0212c17_15": "此乃還源之要道也。",
    "X87n1620_005:0212c19_0": "俗士獻畫障子",
    "X87n1620_005:0212c20_0": "俗士獻畫障子。",
    "X87n1620_005:0212c20_1": "法眼看了問曰。",
    "X87n1620_005:0212c20_2": "汝是心巧手巧。",
    "X87n1620_005:0212c20_3": "士曰。",
    "X87n1620_005:0212c21_0": "心巧。",
    "X87n1620_005:0212c21_1": "法眼曰。",
    "X87n1620_005:0212c21_2": "那個是汝心。",
    "X87n1620_005:0212c21_3": "士無對(歸宗柔代云。",
    "X87n1620_005:0212c21_4": "某甲今日却成容易)。",
    "X87n1620_005:0212c22_0": "老人參桐峰",
    "X87n1620_005:0212c23_0": "有老人。",
    "X87n1620_005:0212c23_1": "入山參桐峰菴主。",
    "X87n1620_005:0212c23_2": "桐峰問曰。",
    "X87n1620_005:0212c23_3": "住在甚處。",
    "X87n1620_005:0212c23_4": "老人不語。",
    "X87n1620_005:0212c24_5": "桐峰曰。",
    "X87n1620_005:0212c24_6": "善能對機。",
    "X87n1620_005:0212c24_7": "老人地上拈一枝草示之。",
    "X87n1620_005:0212c24_8": "桐峰便喝。",
    "X87n1620_005:0213a01_9": "老人禮拜。",
    "X87n1620_005:0213a01_10": "桐峰便歸菴。",
    "X87n1620_005:0213a01_11": "老人曰。",
    "X87n1620_005:0213a01_12": "與麼疑殺一切人在。",
    "X87n1620_005:0213a03_0": "儒者謁南院",
    "X87n1620_005:0213a04_0": "有儒者。",
    "X87n1620_005:0213a04_1": "博覽古今。",
    "X87n1620_005:0213a04_2": "時呼為張百會。",
    "X87n1620_005:0213a04_3": "來謁南院。",
    "X87n1620_005:0213a04_4": "南院問。",
    "X87n1620_005:0213a05_0": "莫是張百會麼。",
    "X87n1620_005:0213a05_1": "曰不敢。",
    "X87n1620_005:0213a05_2": "南院以手於空畫一畫曰。",
    "X87n1620_005:0213a05_3": "會麼。",
    "X87n1620_005:0213a06_4": "曰不會。",
    "X87n1620_005:0213a06_5": "南院曰。",
    "X87n1620_005:0213a06_6": "一尚不會。",
    "X87n1620_005:0213a06_7": "甚麼處得百會來。",
    "X87n1620_005:0213a07_0": "牧主請風穴陞座",
    "X87n1620_005:0213a08_0": "風穴沼禪師。",
    "X87n1620_005:0213a08_1": "於牧主衙內度夏。",
    "X87n1620_005:0213a08_2": "請陞座。",
    "X87n1620_005:0213a08_3": "時有盧陂長老。",
    "X87n1620_005:0213a09_4": "出問。",
    "X87n1620_005:0213a09_5": "學人有鐵牛之機。",
    "X87n1620_005:0213a09_6": "請師不搭印。",
    "X87n1620_005:0213a09_7": "風穴曰。",
    "X87n1620_005:0213a09_8": "慣釣鯨鯢澄巨浸。",
    "X87n1620_005:0213a10_9": "却嗟蛙步[馬*展]泥沙。",
    "X87n1620_005:0213a10_10": "陂佇思。",
    "X87n1620_005:0213a10_11": "風穴喝曰。",
    "X87n1620_005:0213a10_12": "長老何不進語。",
    "X87n1620_005:0213a11_13": "陂擬議。",
    "X87n1620_005:0213a11_14": "風穴便打一拂子曰。",
    "X87n1620_005:0213a11_15": "還記得話頭麼。",
    "X87n1620_005:0213a12_16": "試舉看。",
    "X87n1620_005:0213a12_17": "陂擬開口。",
    "X87n1620_005:0213a12_18": "風穴又打一拂子。",
    "X87n1620_005:0213a12_19": "牧主曰。",
    "X87n1620_005:0213a12_20": "信知佛法與王法一般。",
    "X87n1620_005:0213a13_21": "風穴曰。",
    "X87n1620_005:0213a13_22": "見甚麼道理。",
    "X87n1620_005:0213a13_23": "牧主曰。",
    "X87n1620_005:0213a13_24": "當斷不斷。",
    "X87n1620_005:0213a14_25": "反招其亂。",
    "X87n1620_005:0213a14_26": "風穴便下座。",
    "X87n1620_005:0213a15_0": "提刑問璉三生",
    "X87n1620_005:0213a16_0": "有提刑。",
    "X87n1620_005:0213a16_1": "問璉三生曰。",
    "X87n1620_005:0213a16_2": "某甲四十年為官。",
    "X87n1620_005:0213a16_3": "作麼脫得此塵去。",
    "X87n1620_005:0213a17_4": "璉無對。",
    "X87n1620_005:0213a17_5": "(道吾真代曰。",
    "X87n1620_005:0213a17_6": "一任[跳兆+孛]跳)又看上峰路。",
    "X87n1620_005:0213a17_7": "璉曰。",
    "X87n1620_005:0213a17_8": "這箇是上峰路。",
    "X87n1620_005:0213a18_9": "提刑曰。",
    "X87n1620_005:0213a18_10": "寺在上頭那。",
    "X87n1620_005:0213a18_11": "璉曰是。",
    "X87n1620_005:0213a18_12": "提刑曰。",
    "X87n1620_005:0213a18_13": "恁麼則不去也。",
    "X87n1620_005:0213a19_14": "璉無語(道吾代曰。",
    "X87n1620_005:0213a19_15": "今日勘破)。",
    "X87n1620_005:0213a20_0": "工部問三交嵩",
    "X87n1620_005:0213a21_0": "有工部。",
    "X87n1620_005:0213a21_1": "問三交智嵩禪師曰。",
    "X87n1620_005:0213a21_2": "百尺竿頭獨打毬。",
    "X87n1620_005:0213a21_3": "萬丈懸崖絲繫腰時如何。",
    "X87n1620_005:0213a22_4": "三交曰。",
    "X87n1620_005:0213a22_5": "幽州著脚。",
    "X87n1620_005:0213a22_6": "廣南廝撲。",
    "X87n1620_005:0213a22_7": "工部無語。",
    "X87n1620_005:0213a23_8": "三交曰。",
    "X87n1620_005:0213a23_9": "勘破這胡漢。",
    "X87n1620_005:0213a23_10": "工部曰。",
    "X87n1620_005:0213a23_11": "二十年江南界裏。",
    "X87n1620_005:0213a24_12": "這回却見禪師。",
    "X87n1620_005:0213a24_13": "三交曰。",
    "X87n1620_005:0213a24_14": "瞎老婆吹火。",
    "X87n1620_005:0213b01_0": "提刑問楊岐會",
    "X87n1620_005:0213b02_0": "有提刑。",
    "X87n1620_005:0213b02_1": "問楊岐會曰。",
    "X87n1620_005:0213b02_2": "和尚法嗣何人。",
    "X87n1620_005:0213b02_3": "曰慈明。",
    "X87n1620_005:0213b02_4": "提刑曰。",
    "X87n1620_005:0213b03_0": "見箇什麼道理。",
    "X87n1620_005:0213b03_1": "便嗣他。",
    "X87n1620_005:0213b03_2": "楊岐曰。",
    "X87n1620_005:0213b03_3": "共鉢盂喫飯。",
    "X87n1620_005:0213b03_4": "提刑曰。",
    "X87n1620_005:0213b04_0": "與麼則不見也。",
    "X87n1620_005:0213b04_1": "楊岐捺膝曰。",
    "X87n1620_005:0213b04_2": "什麼處是不見。",
    "X87n1620_005:0213b04_3": "提刑大笑。",
    "X87n1620_005:0213b05_4": "楊岐曰。",
    "X87n1620_005:0213b05_5": "須是提刑始得。",
    "X87n1620_005:0213b05_6": "又請入院燒香。",
    "X87n1620_005:0213b05_7": "提刑曰。",
    "X87n1620_005:0213b05_8": "却待回來。",
    "X87n1620_005:0213b06_9": "楊岐乃獻茶信。",
    "X87n1620_005:0213b06_10": "提刑曰。",
    "X87n1620_005:0213b06_11": "這箇却不消得。",
    "X87n1620_005:0213b06_12": "有甚乾嚗嚗底禪。",
    "X87n1620_005:0213b07_13": "希見示些子。",
    "X87n1620_005:0213b07_14": "楊岐指茶信曰。",
    "X87n1620_005:0213b07_15": "這箇尚不要。",
    "X87n1620_005:0213b08_16": "豈況乾嚗嚗底禪。",
    "X87n1620_005:0213b08_17": "提刑擬議。",
    "X87n1620_005:0213b08_18": "楊岐乃有頌。",
    "X87n1620_005:0213b08_19": "示作王臣。",
    "X87n1620_005:0213b09_20": "佛祖罔措。",
    "X87n1620_005:0213b09_21": "為指迷源。",
    "X87n1620_005:0213b09_22": "殺人無數。",
    "X87n1620_005:0213b09_23": "提刑曰。",
    "X87n1620_005:0213b09_24": "和尚為什麼就身打劫。",
    "X87n1620_005:0213b10_25": "楊岐曰。",
    "X87n1620_005:0213b10_26": "元來却是我家裡人。",
    "X87n1620_005:0213b10_27": "提刑大笑。",
    "X87n1620_005:0213b11_0": "俗士投五祖出家",
    "X87n1620_005:0213b12_0": "有俗士。",
    "X87n1620_005:0213b12_1": "投五祖演出家。",
    "X87n1620_005:0213b12_2": "自曰捨緣。",
    "X87n1620_005:0213b12_3": "五祖曰。",
    "X87n1620_005:0213b12_4": "何謂捨緣。",
    "X87n1620_005:0213b13_0": "士曰。",
    "X87n1620_005:0213b13_1": "有妻子捨之。",
    "X87n1620_005:0213b13_2": "謂之捨緣。",
    "X87n1620_005:0213b13_3": "五祖曰。",
    "X87n1620_005:0213b13_4": "我也有個老婆。",
    "X87n1620_005:0213b14_0": "還信否。",
    "X87n1620_005:0213b14_1": "士默然。",
    "X87n1620_005:0213b14_2": "五祖乃頌曰。",
    "X87n1620_005:0213b14_3": "我有個老婆。",
    "X87n1620_005:0213b14_4": "出世無人見。",
    "X87n1620_005:0213b15_5": "晝夜共一處。",
    "X87n1620_005:0213b15_6": "自然有方便。",
    "X87n1620_005:0213b16_0": "居士往五祖齋僧",
    "X87n1620_005:0213b17_0": "舒州有一居士。",
    "X87n1620_005:0213b17_1": "常往五祖齋僧。",
    "X87n1620_005:0213b17_2": "一日問首座曰。",
    "X87n1620_005:0213b17_3": "某俗人參得禪麼。",
    "X87n1620_005:0213b18_4": "首座云。",
    "X87n1620_005:0213b18_5": "你是俗人。",
    "X87n1620_005:0213b18_6": "如何參得禪。",
    "X87n1620_005:0213b18_7": "居士不會。",
    "X87n1620_005:0213b19_8": "舉似五祖。",
    "X87n1620_005:0213b19_9": "五祖云。",
    "X87n1620_005:0213b19_10": "首座却有本分手段為人。",
    "X87n1620_005:0213b19_11": "居士方信。",
    "X87n1620_005:0213b20_12": "遂篤志參究。",
    "X87n1620_005:0213b20_13": "後見佛眼。",
    "X87n1620_005:0213b20_14": "佛眼展手曰。",
    "X87n1620_005:0213b20_15": "因甚麼喚作手。",
    "X87n1620_005:0213b21_16": "居士忽大悟。",
    "X87n1620_005:0213b22_0": "俗士問雲峰悅",
    "X87n1620_005:0213b23_0": "有俗士。",
    "X87n1620_005:0213b23_1": "問雲峰文悅禪師曰。",
    "X87n1620_005:0213b23_2": "如何是佛。",
    "X87n1620_005:0213b23_3": "雲峰曰。",
    "X87n1620_005:0213b23_4": "著衣喫飯量家道。",
    "X87n1620_005:0213b24_5": "曰恁麼則退身三步。",
    "X87n1620_005:0213b24_6": "叉手當胸去也。",
    "X87n1620_005:0213b24_7": "雲峰曰。",
    "X87n1620_005:0213c01_8": "醉後添杯不若無。",
    "X87n1620_005:0213c02_0": "太守問九頂",
    "X87n1620_005:0213c03_0": "太守呂公。",
    "X87n1620_005:0213c03_1": "瞻大像。",
    "X87n1620_005:0213c03_2": "問九頂清素禪師曰。",
    "X87n1620_005:0213c03_3": "既是大像。",
    "X87n1620_005:0213c03_4": "為甚麼肩負兩楹。",
    "X87n1620_005:0213c04_5": "九頂曰。",
    "X87n1620_005:0213c04_6": "船上無散工。",
    "X87n1620_005:0213c04_7": "至閣下覩觀音像。",
    "X87n1620_005:0213c05_8": "又問。",
    "X87n1620_005:0213c05_9": "彌勒化境。",
    "X87n1620_005:0213c05_10": "觀音何來。",
    "X87n1620_005:0213c05_11": "九頂曰。",
    "X87n1620_005:0213c05_12": "家富小兒嬌。",
    "X87n1620_005:0213c05_13": "太守乃禮敬。",
    "X87n1620_005:0213c07_0": "侍郎問九僊",
    "X87n1620_005:0213c08_0": "侍郎曾公。",
    "X87n1620_005:0213c08_1": "問九僊法清禪師曰。",
    "X87n1620_005:0213c08_2": "上座山鄉甚處。",
    "X87n1620_005:0213c08_3": "曰嚴州。",
    "X87n1620_005:0213c09_4": "曰與此間是同是別。",
    "X87n1620_005:0213c09_5": "九仙拽伽梨下地揖曰。",
    "X87n1620_005:0213c09_6": "官人曾到嚴州否。",
    "X87n1620_005:0213c10_7": "曾罔措。",
    "X87n1620_005:0213c10_8": "九仙曰。",
    "X87n1620_005:0213c10_9": "待官人到嚴州時。",
    "X87n1620_005:0213c10_10": "却向官人道。",
    "X87n1620_005:0213c12_0": "益州辭知府",
    "X87n1620_005:0213c13_0": "益州澄遠禪師。",
    "X87n1620_005:0213c13_1": "將示寂。",
    "X87n1620_005:0213c13_2": "辭知府曰。",
    "X87n1620_005:0213c13_3": "老僧行脚去。",
    "X87n1620_005:0213c13_4": "通判曰。",
    "X87n1620_005:0213c14_5": "這僧風狂。",
    "X87n1620_005:0213c14_6": "八十歲行脚。",
    "X87n1620_005:0213c14_7": "那裏去。",
    "X87n1620_005:0213c14_8": "知府曰。",
    "X87n1620_005:0213c14_9": "大善知識。",
    "X87n1620_005:0213c15_0": "去住自由。",
    "X87n1620_005:0213c16_0": "巡檢問黃龍明",
    "X87n1620_005:0213c17_0": "黃龍同胡巡檢。",
    "X87n1620_005:0213c17_1": "到公安二聖。",
    "X87n1620_005:0213c17_2": "巡檢問曰。",
    "X87n1620_005:0213c17_3": "達磨對梁武帝云。",
    "X87n1620_005:0213c18_4": "廓然無聖。",
    "X87n1620_005:0213c18_5": "公安為甚麼却有二聖。",
    "X87n1620_005:0213c18_6": "黃龍曰。",
    "X87n1620_005:0213c18_7": "一點水墨。",
    "X87n1620_005:0213c19_8": "兩處成龍。",
    "X87n1620_005:0213c20_0": "俗士問歸仁",
    "X87n1620_005:0213c21_0": "有俗士。",
    "X87n1620_005:0213c21_1": "問歸仁禪師。",
    "X87n1620_005:0213c21_2": "俗人還許會佛法否。",
    "X87n1620_005:0213c21_3": "歸仁曰。",
    "X87n1620_005:0213c21_4": "那箇臺無月。",
    "X87n1620_005:0213c22_5": "誰家樹不春。",
    "X87n1620_005:0213c23_0": "有官人問興陽",
    "X87n1620_005:0213c24_0": "有官人。",
    "X87n1620_005:0213c24_1": "問興陽清剖禪師曰。",
    "X87n1620_005:0213c24_2": "和尚甚麼時開堂。",
    "X87n1620_005:0213c24_3": "師曰。",
    "X87n1620_005:0214a01_0": "不歷僧祇數。",
    "X87n1620_005:0214a01_1": "日月未生前。",
    "X87n1620_005:0214a02_0": "居士官人問天平",
    "X87n1620_005:0214a03_0": "有居士。",
    "X87n1620_005:0214a03_1": "問天平契愚禪師曰。",
    "X87n1620_005:0214a03_2": "法無動搖時如何。",
    "X87n1620_005:0214a03_3": "天平曰。",
    "X87n1620_005:0214a04_4": "你從潞府來。",
    "X87n1620_005:0214a04_5": "居士曰。",
    "X87n1620_005:0214a04_6": "一步也不曾驀。",
    "X87n1620_005:0214a04_7": "天平曰。",
    "X87n1620_005:0214a04_8": "因甚得到這裏。",
    "X87n1620_005:0214a05_9": "居士曰。",
    "X87n1620_005:0214a05_10": "和尚睡語作麼。",
    "X87n1620_005:0214a05_11": "天平曰。",
    "X87n1620_005:0214a05_12": "放你二十棒。",
    "X87n1620_005:0214a06_13": "又官人問。",
    "X87n1620_005:0214a06_14": "無鄰可隔。",
    "X87n1620_005:0214a06_15": "為甚麼不相見。",
    "X87n1620_005:0214a06_16": "天平曰。",
    "X87n1620_005:0214a06_17": "怨阿誰。",
    "X87n1620_005:0214a08_0": "居士問東山雲頂",
    "X87n1620_005:0214a09_0": "福州東山雲頂禪師。",
    "X87n1620_005:0214a09_1": "有居士問曰。",
    "X87n1620_005:0214a09_2": "洞山道。",
    "X87n1620_005:0214a09_3": "有一物。",
    "X87n1620_005:0214a09_4": "上拄天。",
    "X87n1620_005:0214a10_5": "下拄地。",
    "X87n1620_005:0214a10_6": "未審是甚麼物。",
    "X87n1620_005:0214a10_7": "師曰。",
    "X87n1620_005:0214a10_8": "擔鐵枷喫鐵棒。",
    "X87n1620_005:0214a10_9": "曰天地黑山河走。",
    "X87n1620_005:0214a11_10": "師曰。",
    "X87n1620_005:0214a11_11": "閻老殿前添一鬼。",
    "X87n1620_005:0214a11_12": "北邙山下臥千年。",
    "X87n1620_005:0214a12_13": "士呌快活快活。",
    "X87n1620_005:0214a12_14": "師曰。",
    "X87n1620_005:0214a12_15": "也是野狐吞老鼠。",
    "X87n1620_005:0214a13_0": "童子上經",
    "X87n1620_005:0214a14_0": "有童子上經次。",
    "X87n1620_005:0214a14_1": "僧令持經著函內。",
    "X87n1620_005:0214a14_2": "童子曰。",
    "X87n1620_005:0214a14_3": "某甲念底。",
    "X87n1620_005:0214a15_0": "著向那裏(法眼代云。",
    "X87n1620_005:0214a15_1": "汝念甚麼經)。",
    "X87n1620_005:0214a16_0": "洪塘橋官人問僧",
    "X87n1620_005:0214a17_0": "福州洪塘橋上。",
    "X87n1620_005:0214a17_1": "有僧列坐。",
    "X87n1620_005:0214a17_2": "官人問。",
    "X87n1620_005:0214a17_3": "此中還有佛麼。",
    "X87n1620_005:0214a17_4": "僧無對(法眼代云。",
    "X87n1620_005:0214a18_5": "汝是甚麼人)。",
    "X87n1620_005:0214a19_0": "賣鹽翁",
    "X87n1620_005:0214a20_0": "昔有一僧。",
    "X87n1620_005:0214a20_1": "去覆船。",
    "X87n1620_005:0214a20_2": "路逢一賣鹽翁。",
    "X87n1620_005:0214a20_3": "僧問。",
    "X87n1620_005:0214a20_4": "覆船路向甚麼處去。",
    "X87n1620_005:0214a21_5": "翁良久。",
    "X87n1620_005:0214a21_6": "僧再問。",
    "X87n1620_005:0214a21_7": "翁曰。",
    "X87n1620_005:0214a21_8": "你患聾那。",
    "X87n1620_005:0214a21_9": "僧曰。",
    "X87n1620_005:0214a21_10": "你向我道甚麼。",
    "X87n1620_005:0214a22_11": "翁曰。",
    "X87n1620_005:0214a22_12": "向你道覆船路。",
    "X87n1620_005:0214a22_13": "僧曰。",
    "X87n1620_005:0214a22_14": "翁莫會禪麼。",
    "X87n1620_005:0214a22_15": "翁曰。",
    "X87n1620_005:0214a23_0": "莫道會禪。",
    "X87n1620_005:0214a23_1": "佛法也會盡。",
    "X87n1620_005:0214a23_2": "僧曰。",
    "X87n1620_005:0214a23_3": "你試說看。",
    "X87n1620_005:0214a23_4": "翁挑起鹽籃。",
    "X87n1620_005:0214a24_0": "僧曰難。",
    "X87n1620_005:0214a24_1": "翁曰。",
    "X87n1620_005:0214a24_2": "你喚這個作甚麼。",
    "X87n1620_005:0214a24_3": "僧曰鹽。",
    "X87n1620_005:0214a24_4": "翁曰。",
    "X87n1620_005:0214a24_5": "有甚麼交涉。",
    "X87n1620_005:0214b01_6": "僧曰。",
    "X87n1620_005:0214b01_7": "你喚作甚麼。",
    "X87n1620_005:0214b01_8": "曰不可更向你道是鹽。",
    "X87n1620_005:0214b02_0": "騎牛公子",
    "X87n1620_005:0214b03_0": "公期和尚。",
    "X87n1620_005:0214b03_1": "因往羅漢。",
    "X87n1620_005:0214b03_2": "路逢一騎牛公子。",
    "X87n1620_005:0214b03_3": "師問。",
    "X87n1620_005:0214b03_4": "羅漢路向甚麼處去。",
    "X87n1620_005:0214b04_5": "公拍牛曰。",
    "X87n1620_005:0214b04_6": "道道。",
    "X87n1620_005:0214b04_7": "師喝曰。",
    "X87n1620_005:0214b04_8": "這畜生。",
    "X87n1620_005:0214b04_9": "公曰。",
    "X87n1620_005:0214b04_10": "羅漢路向甚麼處去。",
    "X87n1620_005:0214b05_11": "師却拍牛曰。",
    "X87n1620_005:0214b05_12": "道道。",
    "X87n1620_005:0214b05_13": "公曰。",
    "X87n1620_005:0214b05_14": "直饒恁麼。",
    "X87n1620_005:0214b06_0": "猶少蹄角在。",
    "X87n1620_005:0214b06_1": "師便打。",
    "X87n1620_005:0214b06_2": "公拍牛便走。",
    "X87n1620_005:0214b07_0": "跨驢人",
    "X87n1620_005:0214b08_0": "昔有跨驢人。",
    "X87n1620_005:0214b08_1": "問眾僧。",
    "X87n1620_005:0214b08_2": "何往。",
    "X87n1620_005:0214b08_3": "僧曰。",
    "X87n1620_005:0214b08_4": "道場去。",
    "X87n1620_005:0214b08_5": "其人曰。",
    "X87n1620_005:0214b08_6": "何處不是道場。",
    "X87n1620_005:0214b09_7": "僧毆之曰。",
    "X87n1620_005:0214b09_8": "這漢沒道理。",
    "X87n1620_005:0214b09_9": "向道場裡跨驢不下。",
    "X87n1620_005:0214b11_0": "道流背佛而坐",
    "X87n1620_005:0214b12_0": "昔有道流。",
    "X87n1620_005:0214b12_1": "在佛殿前。",
    "X87n1620_005:0214b12_2": "背佛而坐。",
    "X87n1620_005:0214b12_3": "僧曰。",
    "X87n1620_005:0214b12_4": "道士莫背佛。",
    "X87n1620_005:0214b12_5": "道流曰。",
    "X87n1620_005:0214b13_6": "大德本教中道。",
    "X87n1620_005:0214b13_7": "佛身充滿於法界。",
    "X87n1620_005:0214b13_8": "向甚麼處坐得。",
    "X87n1620_005:0214b14_9": "僧無對(法眼代云。",
    "X87n1620_005:0214b14_10": "識得汝)。",
    "X87n1620_005:0214b15_0": "行者向佛而唾",
    "X87n1620_005:0214b16_0": "有一行者。",
    "X87n1620_005:0214b16_1": "隨法師入佛殿。",
    "X87n1620_005:0214b16_2": "行者向佛而唾。",
    "X87n1620_005:0214b16_3": "法師曰。",
    "X87n1620_005:0214b16_4": "行者少去就。",
    "X87n1620_005:0214b17_5": "何以唾佛。",
    "X87n1620_005:0214b17_6": "行者曰。",
    "X87n1620_005:0214b17_7": "將無佛處來。",
    "X87n1620_005:0214b17_8": "與某甲唾。",
    "X87n1620_005:0214b18_0": "法師無對(溈山云。",
    "X87n1620_005:0214b18_1": "仁者却不仁者。",
    "X87n1620_005:0214b18_2": "不仁者却仁者。",
    "X87n1620_005:0214b18_3": "仰山代法師云。",
    "X87n1620_005:0214b18_4": "但唾行者。",
    "X87n1620_005:0214b18_5": "又云。",
    "X87n1620_005:0214b18_6": "行者若有語。",
    "X87n1620_005:0214b19_0": "即向伊道。",
    "X87n1620_005:0214b19_1": "還我無行者處來)。",
    "X87n1620_005:0214b20_0": "魚浮水上",
    "X87n1620_005:0214b21_0": "死魚浮於水上。",
    "X87n1620_005:0214b21_1": "有人問僧。",
    "X87n1620_005:0214b21_2": "魚豈不是以水為命。",
    "X87n1620_005:0214b21_3": "僧曰是。",
    "X87n1620_005:0214b22_4": "曰為甚麼却向水中死。",
    "X87n1620_005:0214b22_5": "僧無對(杭州天龍機和尚代云。",
    "X87n1620_005:0214b22_6": "是伊為甚麼不去岸上死)。",
    "X87n1620_005:0214b24_0": "佛殿鴿子",
    "X87n1620_005:0214c01_0": "鷂子趂鴿子。",
    "X87n1620_005:0214c01_1": "飛向佛殿欄干上顫。",
    "X87n1620_005:0214c01_2": "有人問僧。",
    "X87n1620_005:0214c01_3": "一切眾生。",
    "X87n1620_005:0214c02_4": "在佛影中。",
    "X87n1620_005:0214c02_5": "常安常樂。",
    "X87n1620_005:0214c02_6": "鴿子見佛。",
    "X87n1620_005:0214c02_7": "為甚麼却顫。",
    "X87n1620_005:0214c02_8": "僧無對(法燈代云。",
    "X87n1620_005:0214c03_9": "怕佛)。",
    "X87n1620_005:0214c04_0": "廣南國主出獵",
    "X87n1620_005:0214c05_0": "廣南有僧住庵。",
    "X87n1620_005:0214c05_1": "國主出獵。",
    "X87n1620_005:0214c05_2": "左右報庵主。",
    "X87n1620_005:0214c05_3": "大王來請起。",
    "X87n1620_005:0214c06_0": "庵主曰。",
    "X87n1620_005:0214c06_1": "非但大王來。",
    "X87n1620_005:0214c06_2": "佛來亦不起。",
    "X87n1620_005:0214c06_3": "王問。",
    "X87n1620_005:0214c06_4": "佛豈不是汝師。",
    "X87n1620_005:0214c07_5": "庵主曰是。",
    "X87n1620_005:0214c07_6": "王曰。",
    "X87n1620_005:0214c07_7": "見師為甚麼不起(法眼代云。",
    "X87n1620_005:0214c07_8": "未足酬恩)。",
    "X87n1620_005:0214c08_0": "官人入鎮州天王院",
    "X87n1620_005:0214c09_0": "昔有官人。",
    "X87n1620_005:0214c09_1": "入鎮州天王院。",
    "X87n1620_005:0214c09_2": "覩神像。",
    "X87n1620_005:0214c09_3": "因問院主曰。",
    "X87n1620_005:0214c09_4": "此是甚麼功德。",
    "X87n1620_005:0214c10_5": "曰護國天王。",
    "X87n1620_005:0214c10_6": "曰祇護此國。",
    "X87n1620_005:0214c10_7": "徧護餘國。",
    "X87n1620_005:0214c10_8": "曰在秦為秦。",
    "X87n1620_005:0214c11_9": "在楚為楚。",
    "X87n1620_005:0214c11_10": "曰臘月二十九日。",
    "X87n1620_005:0214c11_11": "打破鎮州城。",
    "X87n1620_005:0214c11_12": "天王向甚處去。",
    "X87n1620_005:0214c12_13": "院主無對(密雲悟云。",
    "X87n1620_005:0214c12_14": "官人切莫造反。",
    "X87n1620_005:0214c12_15": "復云。",
    "X87n1620_005:0214c12_16": "今日得官人作證)。",
    "X87n1620_005:0214c13_0": "官人作無鬼論",
    "X87n1620_005:0214c14_0": "昔有官人。",
    "X87n1620_005:0214c14_1": "作無鬼論。",
    "X87n1620_005:0214c14_2": "中夜揮毫次。",
    "X87n1620_005:0214c14_3": "忽見一鬼出云。",
    "X87n1620_005:0214c14_4": "汝道無。",
    "X87n1620_005:0214c15_5": "我聻(五祖演云。",
    "X87n1620_005:0214c15_6": "老僧當時若見。",
    "X87n1620_005:0214c15_7": "便以手作鵓鳩嘴。",
    "X87n1620_005:0214c15_8": "向伊道。",
    "X87n1620_005:0214c15_9": "谷谷孤)。",
    "X87n1620_005:0214c16_0": "官人問無揀僧",
    "X87n1620_005:0214c17_0": "官人問僧。",
    "X87n1620_005:0214c17_1": "名甚麼。",
    "X87n1620_005:0214c17_2": "曰無揀。",
    "X87n1620_005:0214c17_3": "官人曰。",
    "X87n1620_005:0214c17_4": "忽然將一椀沙與上座。",
    "X87n1620_005:0214c18_5": "又作麼生。",
    "X87n1620_005:0214c18_6": "曰謝官人供養(法眼別云。",
    "X87n1620_005:0214c18_7": "此猶是揀底)。",
    "X87n1620_005:0214c20_0": "先覺宗乘卷五(終)"
}