[
    {
        "source_sentence": "菩提行經卷第一",
        "from": "T32n1662_001:0543c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖龍樹菩薩集頌",
        "from": "T32n1662_001:0543c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天中印度惹爛馱囉國",
        "from": "T32n1662_001:0543c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛妙法體無邊，　　佛子正心歸命禮，",
        "from": "T32n1662_001:0543c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛甘露戒垂覆護，　　我今讚說悉依法。",
        "from": "T32n1662_001:0543c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說無有未曾有，　　亦非自我而獨專，",
        "from": "T32n1662_001:0543c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無自他如是時，　　乃自思惟觀察作。",
        "from": "T32n1662_001:0543c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是發心觀察時，　　能令我此善增長，",
        "from": "T32n1662_001:0543c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時見如是娑婆界，　　此乃是彼佛世尊。",
        "from": "T32n1662_001:0544a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此界剎那難得生，　　得生為人宜自慶，",
        "from": "T32n1662_001:0544a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟若離菩提心，　　復次此來何以得？",
        "from": "T32n1662_001:0544a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲覆蔽夜黑暗，　　閃電光明剎那現，",
        "from": "T32n1662_001:0544a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛威德利亦復然，　　剎那發意人獲福。",
        "from": "T32n1662_001:0544a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故善少力雖劣，　　能破大惡之業力，",
        "from": "T32n1662_001:0544a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是若發菩提心，　　此善勇進能超彼。",
        "from": "T32n1662_001:0544a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟無量無邊劫，　　見佛咸說此真實，",
        "from": "T32n1662_001:0544a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不快樂得快樂，　　增長救度無邊眾。",
        "from": "T32n1662_001:0544a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸有情處眾苦，　　令離百千諸苦怖，",
        "from": "T32n1662_001:0544a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受多快樂百千種，　　為恒不離菩提心。",
        "from": "T32n1662_001:0544a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼善逝子處纏蓋，　　行在輪迴無所愛，",
        "from": "T32n1662_001:0544a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若剎那說菩提心，　　人天歡喜悉歸命。",
        "from": "T32n1662_001:0544a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有受持不淨像，　　喻佛寶像而無價，",
        "from": "T32n1662_001:0544a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如藥變化遍堅牢，　　等修持妙菩提心。",
        "from": "T32n1662_001:0544a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心寶驗無邊，　　價直世間無可喻，",
        "from": "T32n1662_001:0544a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調御行人伴侶等，　　悉使受持而堅牢。",
        "from": "T32n1662_001:0544a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "芭蕉不實而生實，　　生實芭蕉而身謝，",
        "from": "T32n1662_001:0544a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心樹而清淨，　　恒生勝果而不盡。",
        "from": "T32n1662_001:0544a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已作暴惡眾罪業，　　依菩提心剎那脫，",
        "from": "T32n1662_001:0544a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛依託無大怖，　　彼癡有情何不依？",
        "from": "T32n1662_001:0544a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如劫盡時大火，　　剎那焚燒罪業薪，",
        "from": "T32n1662_001:0544a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若讚慈尊無量言，　　是曰善哉之智者。",
        "from": "T32n1662_001:0544a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼種種覺心，　　正智而平等，",
        "from": "T32n1662_001:0544a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提誓願心，　　而行菩提行。",
        "from": "T32n1662_001:0544a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻去者欲行，　　彼之分別說，",
        "from": "T32n1662_001:0544a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智分別說已，　　所行如智用。",
        "from": "T32n1662_001:0544a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提之願心，　　大果如輪迴，",
        "from": "T32n1662_001:0544a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福故不間斷，　　亦如彼行意。",
        "from": "T32n1662_001:0544a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼等無邊，　　有情界解脫，",
        "from": "T32n1662_001:0544b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與彼心平等，　　菩提願不退。",
        "from": "T32n1662_001:0544b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等好睡眠，　　亦復多迷醉，",
        "from": "T32n1662_001:0544b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "間斷於福流，　　喻空無所有。",
        "from": "T32n1662_001:0544b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙臂而問此，　　劣意之有情，",
        "from": "T32n1662_001:0544b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於解脫得生，　　為自為如來？",
        "from": "T32n1662_001:0544b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃思惟療除，　　苦惱之有情，",
        "from": "T32n1662_001:0544b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使苦惱盡已，　　獲得無邊福。",
        "from": "T32n1662_001:0544b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情無邊苦，　　云何而療治？",
        "from": "T32n1662_001:0544b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使一一安樂，　　獲無邊功德。",
        "from": "T32n1662_001:0544b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以利父母，　　如是及眷屬？",
        "from": "T32n1662_001:0544b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得天及仙人，　　淨行婆羅門。",
        "from": "T32n1662_001:0544b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是彼有情，　　乃過去睡夢，",
        "from": "T32n1662_001:0544b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不願於自利，　　唯願生利他。",
        "from": "T32n1662_001:0544b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情最勝寶，　　希有何得生？",
        "from": "T32n1662_001:0544b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種意利他，　　不獨於自利。",
        "from": "T32n1662_001:0544b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜世間種，　　精進世間藥，",
        "from": "T32n1662_001:0544b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心寶與有福，　　而彼云何說？",
        "from": "T32n1662_001:0544b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何諸有情，　　得一切快樂，",
        "from": "T32n1662_001:0544b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為發菩提心，　　供養於如來。",
        "from": "T32n1662_001:0544b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷愛樂快樂，　　乃喻於冤嫌，",
        "from": "T32n1662_001:0544b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離與隨行，　　悉從於自意。",
        "from": "T32n1662_001:0544b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼求快樂，　　苦惱種無邊，",
        "from": "T32n1662_001:0544b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積諸善快樂，　　諸苦惱消除。",
        "from": "T32n1662_001:0544b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破壞迷惑因，　　善哉云何得？",
        "from": "T32n1662_001:0544b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親彼善知識，　　彼福如是得。",
        "from": "T32n1662_001:0544b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作利若迴向，　　彼必返讚歎，",
        "from": "T32n1662_001:0544b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作善不求利，　　說彼是菩薩。",
        "from": "T32n1662_001:0544b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有布施於少食，　　修善供養於世間，",
        "from": "T32n1662_001:0544b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所施大小如蚊蚋，　　亦獲快樂得半日。",
        "from": "T32n1662_001:0544c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何獲得於能仁？",
        "from": "T32n1662_001:0544c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　要度無邊有情盡，有情無盡若虛空，　　一切智求自圓滿。",
        "from": "T32n1662_001:0544c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子靜念而思惟，　　若煩惱生自心作，",
        "from": "T32n1662_001:0544c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數生煩惱復生疑，　　佛說此人墮地獄。",
        "from": "T32n1662_001:0544c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子若發菩提心，　　滅大罪力得勝果，",
        "from": "T32n1662_001:0544c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今歸命摩尼心，　　救度有情得快樂。",
        "from": "T32n1662_001:0544c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端彼摩尼恭敬心，　　用奉供養於如來，",
        "from": "T32n1662_001:0544c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及彼清淨妙法寶，　　佛功德海量無邊。",
        "from": "T32n1662_001:0544c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間所有諸妙花，　　乃至妙菓及湯藥，",
        "from": "T32n1662_001:0544c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有珍寶澄清水，　　悉皆奉供而適意。",
        "from": "T32n1662_001:0544c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山中之寶及眾寶，　　適悅樹林寂靜處，",
        "from": "T32n1662_001:0544c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蔓花莊嚴樹光明，　　結菓低垂枝𣘨橠。",
        "from": "T32n1662_001:0544c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人間天上香塗香，　　乃至劫樹及寶樹，",
        "from": "T32n1662_001:0544c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "池水清淨復莊嚴，　　鵝鴻好聲極適意。",
        "from": "T32n1662_001:0544c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穀自然生非所種，　　別別莊嚴而供養，",
        "from": "T32n1662_001:0544c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等虛空界量廣大，　　此一切有悉受用。",
        "from": "T32n1662_001:0544c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今所獻并子等，　　供養最上佛牟尼，",
        "from": "T32n1662_001:0544c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我不捨於大悲，　　受彼最上之供養。",
        "from": "T32n1662_001:0544c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以無福大貧窮，　　更無纖毫別供養，",
        "from": "T32n1662_001:0544c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今思惟為自他，　　願佛受斯隨力施。",
        "from": "T32n1662_001:0544c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我自身施一切佛，　　以自身等遍一切，",
        "from": "T32n1662_001:0544c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加被我作上有情，　　有情恒常佛教化。",
        "from": "T32n1662_001:0544c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我得如來加被已，　　化利有情無怖畏，",
        "from": "T32n1662_001:0544c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去罪業悉遠離，　　未來眾罪不復作。",
        "from": "T32n1662_001:0544c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶光明處甚適悅，　　天蓋莊嚴奉真如，",
        "from": "T32n1662_001:0544c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水精清淨復光明，　　種種妙堂香浴作。",
        "from": "T32n1662_001:0544c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大寶瓶滿盛香水，　　復著適意諸妙花，",
        "from": "T32n1662_001:0544c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗浴如來無垢身，　　我當讚詠獻歌樂。",
        "from": "T32n1662_001:0545a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨香熏上妙衣，　　用蓋覆彼最上色，",
        "from": "T32n1662_001:0545a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今獻此上衣服，　　願佛慈悲哀納受。",
        "from": "T32n1662_001:0545a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種柔軟妙天衣，　　彼莊嚴中而最上，",
        "from": "T32n1662_001:0545a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養如來并普賢，　　及彼文殊觀自在。",
        "from": "T32n1662_001:0545a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒為護心，　　護之使堅牢，",
        "from": "T32n1662_001:0545a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此心不能護，　　云何能護戒？",
        "from": "T32n1662_001:0545a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻醉象不降，　　不患於疼痛，",
        "from": "T32n1662_001:0545a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放心如醉象，　　當招阿鼻等。",
        "from": "T32n1662_001:0545a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念索常執持，　　繫縛於心象，",
        "from": "T32n1662_001:0545a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得離放逸怖，　　獲一切安樂。",
        "from": "T32n1662_001:0545a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能繫一心，　　一切皆能繫，",
        "from": "T32n1662_001:0545a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自降一心，　　一切自降伏。",
        "from": "T32n1662_001:0545a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子熊虎狼，　　夜叉羅剎等，",
        "from": "T32n1662_001:0545a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切地獄卒，　　皆悉是其冤。",
        "from": "T32n1662_001:0545a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若怖一切冤，　　無邊苦惱集，",
        "from": "T32n1662_001:0545a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆因心所得，　　佛世尊正說。",
        "from": "T32n1662_001:0545a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄眾苦器，　　及熱鐵丸等，",
        "from": "T32n1662_001:0545a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰作復何生？",
        "from": "T32n1662_001:0545a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　貪瞋癡所有。",
        "from": "T32n1662_001:0545a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由彼諸罪心，　　佛生諸世間，",
        "from": "T32n1662_001:0545a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界心滅故，　　是故無怖畏。",
        "from": "T32n1662_001:0545a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若昔行檀施，　　今世而不貧，",
        "from": "T32n1662_001:0545a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今貧勿煩惱，　　過去云何悔。",
        "from": "T32n1662_001:0545a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人心少分，　　行檀波羅蜜，",
        "from": "T32n1662_001:0545a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說果報，　　同一切布施。",
        "from": "T32n1662_001:0545a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人心持戒，　　嫌誰而牽殺，",
        "from": "T32n1662_001:0545a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗔心之冤家，　　殺盡等虛空。",
        "from": "T32n1662_001:0545a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地量無邊，　　何皮而能蓋？",
        "from": "T32n1662_001:0545a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "履用皮少分，　　隨行處處覆。",
        "from": "T32n1662_001:0545b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外我性亦然，　　所有誰能勸？",
        "from": "T32n1662_001:0545b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但勸於自心，　　外我而自伏。",
        "from": "T32n1662_001:0545b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身貧而無福，　　彼果同所行，",
        "from": "T32n1662_001:0545b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若心施一衣，　　感果而增福。",
        "from": "T32n1662_001:0545b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸行若修持，　　心念恒不捨，",
        "from": "T32n1662_001:0545b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切無利心，　　虛假宜遠離。",
        "from": "T32n1662_001:0545b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切心法財，　　宜祕密觀察，",
        "from": "T32n1662_001:0545b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離苦獲安樂，　　彼得超世間。",
        "from": "T32n1662_001:0545b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我云何修行？",
        "from": "T32n1662_001:0545b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　修行唯護心，是故我觀心，　　恒時而作護。",
        "from": "T32n1662_001:0545b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻獼猴身瘡，　　一心而將護，",
        "from": "T32n1662_001:0545b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中惡如是，　　恒常而護心。",
        "from": "T32n1662_001:0545b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怖苦惱之瘡，　　我一心常護，",
        "from": "T32n1662_001:0545b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破壞於眾合，　　心瘡乃無怖。",
        "from": "T32n1662_001:0545b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常作如是行，　　不行人中惡，",
        "from": "T32n1662_001:0545b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中罪不犯，　　自然而不怖。",
        "from": "T32n1662_001:0545b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲盡身命，　　利行而供養，",
        "from": "T32n1662_001:0545b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別別身命盡，　　善心而不退。",
        "from": "T32n1662_001:0545b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲守護心，　　合掌今專作，",
        "from": "T32n1662_001:0545b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心念念之中，　　一切方便護。",
        "from": "T32n1662_001:0545b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻於重病人，　　諸事不寧忍，",
        "from": "T32n1662_001:0545b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散亂心亦然，　　不堪諸事業。",
        "from": "T32n1662_001:0545b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心散亂不定，　　聞思惟觀察，",
        "from": "T32n1662_001:0545b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如器之滲漏，　　於水不能盛。",
        "from": "T32n1662_001:0545b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由多聞之人，　　於信方便等，",
        "from": "T32n1662_001:0545b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過失心不定，　　獲不寂靜罪。",
        "from": "T32n1662_001:0545b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不決定故，　　迷惑賊所得，",
        "from": "T32n1662_001:0545b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有之福善，　　偷墮於惡處。",
        "from": "T32n1662_001:0545b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱眾盜賊，　　魔著故得便，",
        "from": "T32n1662_001:0545c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由魔羅發起，　　破壞善生命。",
        "from": "T32n1662_001:0545c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守彼意根門，　　惡不能牽去，",
        "from": "T32n1662_001:0545c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念彼罪苦惱，　　次復獲安住。",
        "from": "T32n1662_001:0545c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉隨師教，　　獲得善念生，",
        "from": "T32n1662_001:0545c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉於教誨師，　　當一心供給。",
        "from": "T32n1662_001:0545c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸佛菩薩，　　剎那心決定，",
        "from": "T32n1662_001:0545c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當怖畏憶念，　　慈哀現面前。",
        "from": "T32n1662_001:0545c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵心而不定，　　去去不復還，",
        "from": "T32n1662_001:0545c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能守意門，　　護之住不散。",
        "from": "T32n1662_001:0545c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今護此心，　　恒常如是住，",
        "from": "T32n1662_001:0545c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻木之無根，　　不生惡枝葉。",
        "from": "T32n1662_001:0545c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼觀於色相，　　知虛假不實，",
        "from": "T32n1662_001:0545c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物物恒諦觀，　　是故而不著。",
        "from": "T32n1662_001:0545c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因見而觀察，　　觀之令不惑，",
        "from": "T32n1662_001:0545c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所來觀見已，　　安畏以善來。",
        "from": "T32n1662_001:0545c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲行不知道，　　望四方生怖，",
        "from": "T32n1662_001:0545c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定知方已，　　觀心行亦然。",
        "from": "T32n1662_001:0545c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者之所行，　　思惟於前後，",
        "from": "T32n1662_001:0545c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善是惡等，　　如是事不失。",
        "from": "T32n1662_001:0545c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不住於此身，　　離此復何作？",
        "from": "T32n1662_001:0545c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何住此身？",
        "from": "T32n1662_001:0545c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　當復觀中間。",
        "from": "T32n1662_001:0545c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀內心亦然，　　而用諸方便，",
        "from": "T32n1662_001:0545c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法為大柱，　　縛之令不脫。",
        "from": "T32n1662_001:0545c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以如是意，　　觀我之所在，",
        "from": "T32n1662_001:0545c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸識皆如是，　　攝令剎那住。",
        "from": "T32n1662_001:0545c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若怖因業力，　　能趣求快樂，",
        "from": "T32n1662_001:0545c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修彼檀戒度，　　乃至大捨等。",
        "from": "T32n1662_001:0545c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修菩提因，　　彼別不思惟，",
        "from": "T32n1662_001:0545c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一向修自心，　　當起如是見。",
        "from": "T32n1662_001:0546a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是修諸善，　　不起於怖畏，",
        "from": "T32n1662_001:0546a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而令諸煩惱，　　決定不增長。",
        "from": "T32n1662_001:0546a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種正言說，　　見在而甚多，",
        "from": "T32n1662_001:0546a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀覽悉決了，　　破疑網得果。",
        "from": "T32n1662_001:0546a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如草被割截，　　念佛戒能忍，",
        "from": "T32n1662_001:0546a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那行此行，　　獲得殊勝果。",
        "from": "T32n1662_001:0546a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲於諸正說，　　皆悉得通達，",
        "from": "T32n1662_001:0546a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀照自心，　　常修於精進。",
        "from": "T32n1662_001:0546a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻木之無情，　　無言無所作，",
        "from": "T32n1662_001:0546a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見自心亦然，　　決定令如是。",
        "from": "T32n1662_001:0546a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心起於輕慢，　　如彼迷醉人，",
        "from": "T32n1662_001:0546a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟求自讚譽，　　非彼修行者。",
        "from": "T32n1662_001:0546a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若他人於我，　　而生於毀謗，",
        "from": "T32n1662_001:0546a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂是嗔癡等，　　住心恒似木。",
        "from": "T32n1662_001:0546a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如木不分別，　　利養尊卑稱，",
        "from": "T32n1662_001:0546a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為眷屬，　　乃至承事等。",
        "from": "T32n1662_001:0546a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利他不自利，　　但欲為一切，",
        "from": "T32n1662_001:0546a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說我心，　　堅住恒如木。",
        "from": "T32n1662_001:0546a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心住如木，　　於尊親朋友，",
        "from": "T32n1662_001:0546a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於三業，　　不生憎愛怖。",
        "from": "T32n1662_001:0546a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察於煩惱，　　如空而不著，",
        "from": "T32n1662_001:0546a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當勇猛堅牢，　　受持為恒常。",
        "from": "T32n1662_001:0546a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無善慚可怖，　　當一心求他，",
        "from": "T32n1662_001:0546a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨住三昧，　　為他所尊重。",
        "from": "T32n1662_001:0546a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖居童稚位，　　不使他瞋惱，",
        "from": "T32n1662_001:0546a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自亦不瞋他，　　慈悲恒若此。",
        "from": "T32n1662_001:0546a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我受持禪那，　　使意恒寂靜，",
        "from": "T32n1662_001:0546a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切有情，　　恒居無罪處。",
        "from": "T32n1662_001:0546a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念須臾間，　　多時為最勝，",
        "from": "T32n1662_001:0546b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是受持心，　　不動如須彌。",
        "from": "T32n1662_001:0546b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鷲貪肉不厭，　　人貪善亦然，",
        "from": "T32n1662_001:0546b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心不修行，　　云何能出離？",
        "from": "T32n1662_001:0546b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何護身意？",
        "from": "T32n1662_001:0546b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　一切時自勤，汝等何所行，　　各各專一心。",
        "from": "T32n1662_001:0546b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷愚不自制，　　妄貪如木身，",
        "from": "T32n1662_001:0546b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此身不淨作，　　云何返愛戀？",
        "from": "T32n1662_001:0546b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "骨鎖肉連持，　　外皮而莊飾，",
        "from": "T32n1662_001:0546b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自覺令不貪，　　解脫於慧刃。",
        "from": "T32n1662_001:0546b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "割截諸身分，　　令見中精髓，",
        "from": "T32n1662_001:0546b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審觀察思惟，　　云何見有人？",
        "from": "T32n1662_001:0546b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心如是觀，　　審諦不見人；",
        "from": "T32n1662_001:0546b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何不淨身，　　貪愛而守護？",
        "from": "T32n1662_001:0546b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處胎食不淨，　　出胎飲血乳，",
        "from": "T32n1662_001:0546b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如是食飲，　　云何作此身？",
        "from": "T32n1662_001:0546b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豺鷲等貪食，　　不分善與惡，",
        "from": "T32n1662_001:0546b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要同人愛身，　　受用成業累。",
        "from": "T32n1662_001:0546b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但如是護身，　　至死無慈忍，",
        "from": "T32n1662_001:0546b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與豺鷲無別，　　汝何恒此作？",
        "from": "T32n1662_001:0546b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身死識不住，　　衣食寧可留？",
        "from": "T32n1662_001:0546b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身謝識必往，　　受用云何貪？",
        "from": "T32n1662_001:0546b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故今作意，　　不貪如是事，",
        "from": "T32n1662_001:0546b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是不遠離，　　得彼諸不善。",
        "from": "T32n1662_001:0546b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如似人生身，　　肢體求成就，",
        "from": "T32n1662_001:0546b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受身智不增，　　輪還徒自困。",
        "from": "T32n1662_001:0546b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於世親非親，　　悅顏先慰喻，",
        "from": "T32n1662_001:0546b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是常自制，　　心念恒不捨。",
        "from": "T32n1662_001:0546b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "笑不得高聲，　　不戲擲坐具，",
        "from": "T32n1662_001:0546b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輕手擊他門，　　諦信恒自執。",
        "from": "T32n1662_001:0546c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如盜如猫鷺，　　求事行無聲，",
        "from": "T32n1662_001:0546c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修心亦如此，　　當離於麁獷。",
        "from": "T32n1662_001:0546c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他人之所嫌，　　無義利不說，",
        "from": "T32n1662_001:0546c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒得諸弟子，　　言上而尊愛。",
        "from": "T32n1662_001:0546c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所言說，　　聞之使稱善，",
        "from": "T32n1662_001:0546c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀彼作福事，　　稱讚令歡喜。",
        "from": "T32n1662_001:0546c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衷私說彼德，　　彼聞心必喜，",
        "from": "T32n1662_001:0546c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲讚說彼時，　　先觀彼德行。",
        "from": "T32n1662_001:0546c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修諸歡喜事，　　難得彼誠心，",
        "from": "T32n1662_001:0546c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤修利他德，　　當受快樂報。",
        "from": "T32n1662_001:0546c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憎愛苦宜捨，　　來生大苦故，",
        "from": "T32n1662_001:0546c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此苦我不住，　　來生大快樂。",
        "from": "T32n1662_001:0546c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善言聲柔軟，　　悲根聞生喜，",
        "from": "T32n1662_001:0546c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯彼適意事，　　當信真實語。",
        "from": "T32n1662_001:0546c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒悲念有情，　　愛護如愛眼，",
        "from": "T32n1662_001:0546c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為彼住真實，　　必當得成佛。",
        "from": "T32n1662_001:0546c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼真實得成，　　各此利朋友，",
        "from": "T32n1662_001:0546c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那修功德，　　離苦大安樂。",
        "from": "T32n1662_001:0546c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德殷勤修，　　恒作而自得，",
        "from": "T32n1662_001:0546c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不衒不覆藏，　　誰云諸事等？",
        "from": "T32n1662_001:0546c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀波羅蜜等，　　殊妙而最上，",
        "from": "T32n1662_001:0546c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別行非最上，　　利下無遠離。",
        "from": "T32n1662_001:0546c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛如是利他，　　恒常之所切，",
        "from": "T32n1662_001:0546c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來之教中，　　見彼慈悲事。",
        "from": "T32n1662_001:0546c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界師入滅，　　分別出家人，",
        "from": "T32n1662_001:0546c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食有可不可，　　不離三衣等。",
        "from": "T32n1662_001:0546c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將求妙法身，　　不苦惱眾生，",
        "from": "T32n1662_001:0546c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於眾生如是，　　隨意獲圓滿。",
        "from": "T32n1662_001:0546c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨非須盡命，　　彼捨要平等，",
        "from": "T32n1662_001:0547a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲心當清淨，　　果報自圓滿。",
        "from": "T32n1662_001:0547a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨心而重法，　　不執器杖等，",
        "from": "T32n1662_001:0547a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不持傘蓋頭，　　無諸輕慢事。",
        "from": "T32n1662_001:0547a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為男子女人，　　說法深廣大，",
        "from": "T32n1662_001:0547a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不分人勝劣，　　令彼重平等。",
        "from": "T32n1662_001:0547a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法之不廣大，　　乃及非法行，",
        "from": "T32n1662_001:0547a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離不敬禮，　　樂說於大乘。",
        "from": "T32n1662_001:0547a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齒木及洟唾，　　不棄於淨地，",
        "from": "T32n1662_001:0547a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨水及淨舍，　　勿得棄便痢。",
        "from": "T32n1662_001:0547a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喫食勿滿口，　　食勿令有聲，",
        "from": "T32n1662_001:0547a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食時不語言，　　亦勿大開口。",
        "from": "T32n1662_001:0547a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐不得垂足，　　行亦不挑臂，",
        "from": "T32n1662_001:0547a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不與女同乘，　　亦不同坐臥。",
        "from": "T32n1662_001:0547a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸所不律事，　　人見心不喜，",
        "from": "T32n1662_001:0547a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切人既覩，　　遠離而不敬。",
        "from": "T32n1662_001:0547a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人問於道路，　　不得一手指，",
        "from": "T32n1662_001:0547a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙手而指之，　　示其道所至。",
        "from": "T32n1662_001:0547a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所諸行步，　　不弄臂作聲，",
        "from": "T32n1662_001:0547a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦勿妄彈指，　　威儀如是守。",
        "from": "T32n1662_001:0547a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師雖已化滅，　　四儀應當學，",
        "from": "T32n1662_001:0547a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉戒行不輕，　　決定獲聖果。",
        "from": "T32n1662_001:0547a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩行無量，　　所說無有邊，",
        "from": "T32n1662_001:0547a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以清淨心，　　決定而奉行。",
        "from": "T32n1662_001:0547a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一晝一夜，　　分之各三時，",
        "from": "T32n1662_001:0547a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道普懺悔，　　住佛菩提心。",
        "from": "T32n1662_001:0547a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心自住，　　亦令他獲得，",
        "from": "T32n1662_001:0547a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子住學戒，　　一心如是持。",
        "from": "T32n1662_001:0547a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛戒體清淨，　　不見有纖毫，",
        "from": "T32n1662_001:0547a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒作如是行，　　彼福無有量。",
        "from": "T32n1662_001:0547b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始為有情，　　行行而不別，",
        "from": "T32n1662_001:0547b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是為有情，　　化令一切覺。",
        "from": "T32n1662_001:0547b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知善知識，　　如命不可捨，",
        "from": "T32n1662_001:0547b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩戒最上，　　大乘法亦爾。",
        "from": "T32n1662_001:0547b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫依師學，　　而能生吉祥，",
        "from": "T32n1662_001:0547b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛佛說智經，　　讀之見戒法。",
        "from": "T32n1662_001:0547b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人心護戒，　　所行悉已見，",
        "from": "T32n1662_001:0547b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若身若心位，　　當微細觀察。",
        "from": "T32n1662_001:0547b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口誦身不行，　　當得何所喻？",
        "from": "T32n1662_001:0547b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如重病人，　　空談於藥力。",
        "from": "T32n1662_001:0547b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏經中，　　說謨羅波底，",
        "from": "T32n1662_001:0547b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如見集戒定，　　廣如經所說。",
        "from": "T32n1662_001:0547b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖龍樹菩薩，　　一心之所集，",
        "from": "T32n1662_001:0547b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所住之處，　　勸恒伸供養。",
        "from": "T32n1662_001:0547b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提行經卷第一",
        "from": "T32n1662_001:0547b16_100",
        "context_with_next_sentence": false
    }
]