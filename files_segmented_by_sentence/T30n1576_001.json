[
    {
        "source_sentence": "大乘二十頌論",
        "from": "T30n1576_001:0256a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹菩薩造",
        "from": "T30n1576_001:0256a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T30n1576_001:0256a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命不可思議性，　　諸佛無著真實智，",
        "from": "T30n1576_001:0256a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法非言非無言，　　佛悲愍故善宣說。",
        "from": "T30n1576_001:0256a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一義無生，　　隨轉而無性，",
        "from": "T30n1576_001:0256a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛眾生一相，　　如虛空平等。",
        "from": "T30n1576_001:0256a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此彼岸無生，　　自性緣所生，",
        "from": "T30n1576_001:0256a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸行皆空，　　一切智智行。",
        "from": "T30n1576_001:0256a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無染真如性，　　無二等寂靜，",
        "from": "T30n1576_001:0256a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法性自性，　　如影像無異。",
        "from": "T30n1576_001:0256a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫分別心，　　無實我計我，",
        "from": "T30n1576_001:0256b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故起諸煩性，　　及苦樂捨等。",
        "from": "T30n1576_001:0256b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間老病死，　　為苦不可愛，",
        "from": "T30n1576_001:0256b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨諸業墜墮，　　此實無有樂。",
        "from": "T30n1576_001:0256b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天趣勝妙樂，　　地獄極大苦，",
        "from": "T30n1576_001:0256b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆不實境界，　　六趣常輪轉。",
        "from": "T30n1576_001:0256b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生妄分別，　　煩惱火燒燃，",
        "from": "T30n1576_001:0256b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮地獄等趣，　　如野火燒林。",
        "from": "T30n1576_001:0256b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生本如幻，　　復取幻境界，",
        "from": "T30n1576_001:0256b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "履幻所成道，　　不了從緣生。",
        "from": "T30n1576_001:0256b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世間畫師，　　畫作夜叉相，",
        "from": "T30n1576_001:0256b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自畫己自怖，　　此名無智者。",
        "from": "T30n1576_001:0256b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生自起染，　　造彼輪迴因，",
        "from": "T30n1576_001:0256b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造已怖墜墮，　　無智不解脫。",
        "from": "T30n1576_001:0256b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生虛妄心，　　起疑惑垢染，",
        "from": "T30n1576_001:0256b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無性計有性，　　受苦中極苦。",
        "from": "T30n1576_001:0256b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛見彼無救，　　乃起悲愍意，",
        "from": "T30n1576_001:0256b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故發菩提心，　　廣修菩提行。",
        "from": "T30n1576_001:0256b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得無上智果，　　即觀察世間，",
        "from": "T30n1576_001:0256b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別所纏縛，　　故為作利益。",
        "from": "T30n1576_001:0256b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從生及生已，　　悉示正真義，",
        "from": "T30n1576_001:0256b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後觀世間空，　　離初中後際。",
        "from": "T30n1576_001:0256b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀生死涅盤，　　是二俱無我，",
        "from": "T30n1576_001:0256b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無染亦無壞，　　本清淨常寂。",
        "from": "T30n1576_001:0256b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢中諸境界，　　覺已悉無見，",
        "from": "T30n1576_001:0256b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者寤癡睡，　　亦不見生死。",
        "from": "T30n1576_001:0256b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡闇蔽者，　　墜墮生死海，",
        "from": "T30n1576_001:0256b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生計有生，　　起世間分別。",
        "from": "T30n1576_001:0256b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若分別有生，　　眾生不如理，",
        "from": "T30n1576_001:0256b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死法中，　　起常樂我想。",
        "from": "T30n1576_001:0256c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一切唯心，　　安立幻化相，",
        "from": "T30n1576_001:0256c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作善不善業，　　感善不善生。",
        "from": "T30n1576_001:0256c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若滅於心輪，　　即滅一切法，",
        "from": "T30n1576_001:0256c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸法無我，　　諸法悉清淨。",
        "from": "T30n1576_001:0256c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛廣宣說世間法，　　當知即是無明緣，",
        "from": "T30n1576_001:0256c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能不起分別心，　　一切眾生何所生？",
        "from": "T30n1576_001:0256c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼諸法法性中，　　實求少法不可得，",
        "from": "T30n1576_001:0256c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世幻師作幻事，　　智者應當如是知。",
        "from": "T30n1576_001:0256c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死輪迴大海中，　　眾生煩惱水充滿，",
        "from": "T30n1576_001:0256c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不運載以大乘，　　畢竟何能到彼岸？",
        "from": "T30n1576_001:0256c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘二十頌論",
        "from": "T30n1576_001:0256c12_100",
        "context_with_next_sentence": false
    }
]