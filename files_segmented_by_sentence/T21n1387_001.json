[
    {
        "source_sentence": "佛說栴檀香身陀羅尼經",
        "from": "T21n1387_001:0906a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1387_001:0906a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1387_001:0906a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告阿難言。",
        "from": "T21n1387_001:0906a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有陀羅尼名栴檀香身。",
        "from": "T21n1387_001:0906a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼有大威力。",
        "from": "T21n1387_001:0906a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與眾生廣大福聚。",
        "from": "T21n1387_001:0906a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人得此陀羅尼。",
        "from": "T21n1387_001:0906a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發至誠心讀誦受持堅固不退。",
        "from": "T21n1387_001:0906a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所有極重宿業悉得消滅。",
        "from": "T21n1387_001:0906a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得殊勝果報。",
        "from": "T21n1387_001:0906a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復有人欲見觀自在菩薩者。",
        "from": "T21n1387_001:0906a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於清淨之處持誦精熟。",
        "from": "T21n1387_001:0906a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後擇吉祥日。",
        "from": "T21n1387_001:0906a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日初出時用白檀香塗曼拏羅。",
        "from": "T21n1387_001:0906a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中焚栴檀香獻殊妙花。",
        "from": "T21n1387_001:0906a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即起首誦陀羅尼八千遍。",
        "from": "T21n1387_001:0906a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得數滿已即於曼拏羅前。",
        "from": "T21n1387_001:0906a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鋪吉祥草虔心而臥。",
        "from": "T21n1387_001:0906a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是經於七日。",
        "from": "T21n1387_001:0906a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得菩薩出現本身。",
        "from": "T21n1387_001:0906a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令持誦人所求成就。",
        "from": "T21n1387_001:0906a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復有人以業報故。",
        "from": "T21n1387_001:0906a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身患㾢病及惡瘡癬。",
        "from": "T21n1387_001:0906a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於佛前誦陀羅尼三遍。",
        "from": "T21n1387_001:0906a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持瞿摩夷及香泥。",
        "from": "T21n1387_001:0906b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作曼拏羅供養佛已。",
        "from": "T21n1387_001:0906b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然取曼拏羅香泥塗於已身。",
        "from": "T21n1387_001:0906b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所患瘡癩速得除瘥。",
        "from": "T21n1387_001:0906b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至宿業亦得除滅。",
        "from": "T21n1387_001:0906b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1387_001:0906b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫室贊二合那曩引誐野一怛他引誐多引野二阿囉曷二合帝引三藐訖三二合沒馱引野三那莫室贊二合捺囉二合鉢囉二合婆引嚩引野四酤摩囉部引多引野五那莫阿引哥引舍誐哩婆二合引野六冒地薩埵引野七摩賀引薩埵引野八那莫阿引哩也二合引嚩路吉帝引說囉引野九冒地薩埵引野十摩賀引薩埵引野十一摩賀引哥引嚕尼哥引野十二阿引哩也二合引嚩路吉帝引說囉寫上阿提瑟姹二合引儞引那十三儞引舍曳賒引彌十四怛𭔞他引十五尾誐底摩哩引唧計引十六訥哩馱二合摩彌引十七訥囉引努鉢囉二合尾瑟致二合引十八贊捺曩引誐𡁠引十九三滿多波哩輸達儞二十󰡊馱尸梨引二十一佐引哩怛囉二合嚩底二十二摩賀引鉢囉二合多引閉引二十三薩哩嚩二合沒馱阿提瑟致二合帝引二十四婆誐嚩底二十五播引波尾那引囉儞娑嚩二合引賀引二十六爾時阿難聞佛說此大陀羅尼已。",
        "from": "T21n1387_001:0906b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜信受禮佛而退。",
        "from": "T21n1387_001:0906b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說栴檀香身陀羅尼經",
        "from": "T21n1387_001:0906b22_100",
        "context_with_next_sentence": false
    }
