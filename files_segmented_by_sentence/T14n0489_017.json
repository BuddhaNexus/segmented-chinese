[
    {
        "source_sentence": "佛說除蓋障菩薩所問經卷第十",
        "from": "T14n0489_017:0744c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七",
        "from": "T14n0489_017:0744c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚",
        "from": "T14n0489_017:0744c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卿傳梵大師賜紫沙門臣法護等奉　詔譯「復次，善男子！",
        "from": "T14n0489_017:0744c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修十種法者，善知勝義諦。",
        "from": "T14n0489_017:0744c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十？",
        "from": "T14n0489_017:0744c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、成就不生法故；",
        "from": "T14n0489_017:0744c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、成就不滅法故；",
        "from": "T14n0489_017:0744c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、成就不壞法故；",
        "from": "T14n0489_017:0744c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、成就不出不入法故；",
        "from": "T14n0489_017:0744c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、成就超言境界故；",
        "from": "T14n0489_017:0744c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者、成就無言詮法故；",
        "from": "T14n0489_017:0744c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者、成就無戲論法故；",
        "from": "T14n0489_017:0744c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者、成就不可說法故；",
        "from": "T14n0489_017:0744c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者、成就寂靜法故；",
        "from": "T14n0489_017:0744c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者、成就聖者法故。",
        "from": "T14n0489_017:0744c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「何以故？",
        "from": "T14n0489_017:0744c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0744c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝義諦理本無壞故。",
        "from": "T14n0489_017:0744c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛出世、若不出世，本自如是，不生不滅，不出不入，非文字所說，非文字詮表，離諸戲論取證。",
        "from": "T14n0489_017:0744c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0744c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此勝義諦，湛然寂靜不可言說，唯諸聖者自內所證。",
        "from": "T14n0489_017:0744c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又，善男子！",
        "from": "T14n0489_017:0744c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此勝義諦，若佛出世、若不出世，本無所壞。",
        "from": "T14n0489_017:0744c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是義故，有善男子發正信心，清淨出家，剃除鬚髮，被服袈裟；",
        "from": "T14n0489_017:0744c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既出家已，發勤精進，修諸善行，如頭覆繒帛，救其火然——求法亦爾。",
        "from": "T14n0489_017:0744c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善男子！",
        "from": "T14n0489_017:0744c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不得勝義諦法，即所修梵行虛無果利，如來出世亦無果利。",
        "from": "T14n0489_017:0744c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故，善男子！",
        "from": "T14n0489_017:0744c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有勝義諦可說，名為菩薩了知勝義。",
        "from": "T14n0489_017:0744c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0744c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修如是十種法者，即善知勝義。",
        "from": "T14n0489_017:0744c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又，善男子！",
        "from": "T14n0489_017:0744c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修十種法者，善知緣生。",
        "from": "T14n0489_017:0744c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十？",
        "from": "T14n0489_017:0744c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、知諸法空；",
        "from": "T14n0489_017:0744c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、知法無所有；",
        "from": "T14n0489_017:0744c28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者知法不真實；",
        "from": "T14n0489_017:0744c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、知法如像；",
        "from": "T14n0489_017:0744c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、知法如影；",
        "from": "T14n0489_017:0745a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者、知法如響；",
        "from": "T14n0489_017:0745a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者、知法如幻；",
        "from": "T14n0489_017:0745a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者、知法不久停；",
        "from": "T14n0489_017:0745a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者、知法動搖；",
        "from": "T14n0489_017:0745a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者、知法皆從緣生。",
        "from": "T14n0489_017:0745a02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「菩薩作是思惟：",
        "from": "T14n0489_017:0745a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『此法如是空，如是無所有，如是不真實，如是如像如影如響如幻，如是不久停，如是動搖，如是緣生。",
        "from": "T14n0489_017:0745a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復了知諸有生法，決定不住速趣破壞，而亦建立生法滅法及彼住法。",
        "from": "T14n0489_017:0745a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』又復惟忖：",
        "from": "T14n0489_017:0745a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『如是諸法，從何緣生？",
        "from": "T14n0489_017:0745a07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從何緣滅？",
        "from": "T14n0489_017:0745a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』作是思惟已，乃知是法從無明生，因無明有，以其無明而為先導依止無明，依無明已諸行乃生，依諸行已而有諸識。",
        "from": "T14n0489_017:0745a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由有識故乃立名色，立名色故乃有六處，六處有故諸觸隨生，以有觸故乃起於受，由其受因愚夫生愛，愛逼迫故而起於取，以有取故纏縛於有，由有故生，生故有老，有老法故，補特伽羅士夫皆死，依死法故，而起憂悲苦惱愁歎，如是乃得一大苦蘊集。",
        "from": "T14n0489_017:0745a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是故智者應當勤力斷除無明，破壞無明，拔無明根滅無明法，由無明滅故，即能除滅無智之者所依止法。",
        "from": "T14n0489_017:0745a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如命根滅已餘根皆滅，無明滅已，無智所依諸法皆滅，亦復如是。",
        "from": "T14n0489_017:0745a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T14n0489_017:0745a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無無智故乃無積集，一切煩惱不轉諸趣，以無煩惱轉諸趣故，即能斷滅生死之因，近於涅槃。",
        "from": "T14n0489_017:0745a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0745a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修如是十種法者，善知緣生。",
        "from": "T14n0489_017:0745a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又，善男子！",
        "from": "T14n0489_017:0745a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修十種法者，能自了知。",
        "from": "T14n0489_017:0745a24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十？",
        "from": "T14n0489_017:0745a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、菩薩善自觀察：",
        "from": "T14n0489_017:0745a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『今我此身何族中生？",
        "from": "T14n0489_017:0745a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門族邪？",
        "from": "T14n0489_017:0745a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎帝利族邪？",
        "from": "T14n0489_017:0745a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者族邪？",
        "from": "T14n0489_017:0745a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而或高尚富貴族邪？",
        "from": "T14n0489_017:0745a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其或卑賤下種族邪？",
        "from": "T14n0489_017:0745a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在高尚富貴族生，我當不恃此緣而生憍倨，設使於其卑賤族生。",
        "from": "T14n0489_017:0745a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』當起是念：",
        "from": "T14n0489_017:0745a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『由我宿昔造雜業故生如是族。",
        "from": "T14n0489_017:0745b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』即以此緣厭離於世，生厭離故而求出家。",
        "from": "T14n0489_017:0745b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「二者、菩薩既出家已，即當觀察：",
        "from": "T14n0489_017:0745b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我今為何義故而求出家？",
        "from": "T14n0489_017:0745b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』乃自思忖：",
        "from": "T14n0489_017:0745b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我今出家，自得度已令他亦度，自解脫已亦令他人悉得解脫。",
        "from": "T14n0489_017:0745b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』以是緣故，終不生於懶墮懈怠。",
        "from": "T14n0489_017:0745b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「三者、菩薩如是觀察：",
        "from": "T14n0489_017:0745b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我今出家，應斷一切罪不善法滅盡無餘。",
        "from": "T14n0489_017:0745b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若已斷諸不善法，生大歡喜適悅慶快；",
        "from": "T14n0489_017:0745b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若未斷諸不善法，應當策勤速令除斷。",
        "from": "T14n0489_017:0745b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「四者、菩薩如是觀察：",
        "from": "T14n0489_017:0745b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我今出家宜應廣大增長修習一切善法。",
        "from": "T14n0489_017:0745b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若已能廣大增長一切善法，心生歡喜適悅慶快；",
        "from": "T14n0489_017:0745b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若曾未增修善法，應當策勤速令增長。",
        "from": "T14n0489_017:0745b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「五者、菩薩如是觀察：",
        "from": "T14n0489_017:0745b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我若依止於師尊已，即能增長一切善法，壞滅一切不善之法。",
        "from": "T14n0489_017:0745b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』由此因緣，於其親教師所，不以尠聞、多聞、有智、無智、持戒、毀戒，應當悉起佛大師想。",
        "from": "T14n0489_017:0745b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼師尊之所，愛樂信重恭敬承事，亦於軌範師所，同彼親教之師尊重恭敬。",
        "from": "T14n0489_017:0745b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「六者、菩薩如是觀察：",
        "from": "T14n0489_017:0745b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我若依止軌範師已，當於菩提分法，未圓滿者而能圓滿，諸有未斷一切煩惱而悉能斷。",
        "from": "T14n0489_017:0745b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』是故，於彼軌範師所，恭敬承事如親教師想心大歡喜。",
        "from": "T14n0489_017:0745b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼師尊，能以正道一切善法攝受於我，不以邪道不善之法而為攝受。",
        "from": "T14n0489_017:0745b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「七者、菩薩如是觀察：",
        "from": "T14n0489_017:0745b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『誰是我師？",
        "from": "T14n0489_017:0745b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』乃審思惟：",
        "from": "T14n0489_017:0745b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『一切智者，是我大師，彼一切明了悲愍世間，起大悲心，作大福田，能為天人、阿修羅、世間等師。",
        "from": "T14n0489_017:0745b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』以是緣故，生大歡喜適悅慶快。",
        "from": "T14n0489_017:0745b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復思惟：",
        "from": "T14n0489_017:0745b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『若佛、世尊為我大師，我實得大善利。",
        "from": "T14n0489_017:0745b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛、世尊施設學道，我當盡其壽命奉教修學，如聞隨轉終不違越。",
        "from": "T14n0489_017:0745b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「八者、菩薩作是思惟：",
        "from": "T14n0489_017:0745c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我當從誰而行乞食？",
        "from": "T14n0489_017:0745c01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』徧伺察已：",
        "from": "T14n0489_017:0745c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我應於彼婆羅門、剎帝利、庶民之家周行求乞，令彼施食獲大果報，成大義利具大威德。",
        "from": "T14n0489_017:0745c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以此緣，令彼得果故從乞食。",
        "from": "T14n0489_017:0745c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「九者、菩薩作是思惟：",
        "from": "T14n0489_017:0745c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『彼婆羅門、剎帝利等，為起何想而施我食？",
        "from": "T14n0489_017:0745c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』如是審察：",
        "from": "T14n0489_017:0745c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『彼婆羅門、剎帝利等，必應於我起沙門想、起苾芻想、起福田想，故施我食。",
        "from": "T14n0489_017:0745c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今宜應積集修行沙門功德、苾芻功德、福田功德。",
        "from": "T14n0489_017:0745c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』「十者、菩薩作是思惟：",
        "from": "T14n0489_017:0745c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我當云何而能出離無始生死？",
        "from": "T14n0489_017:0745c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』如是審察：",
        "from": "T14n0489_017:0745c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『一者、我得成苾芻相，斯為第一出離生死；",
        "from": "T14n0489_017:0745c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、我得成就苾芻所有功德，斯為第二出離生死；",
        "from": "T14n0489_017:0745c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、我能發起精進捨離懈怠，修諸善行證得法性，斯為第三出離生死；",
        "from": "T14n0489_017:0745c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、遍修諸行，乃至成佛化度有情，斯為第四出離生死。",
        "from": "T14n0489_017:0745c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』菩薩若能如是審諦常所觀察，是即名為善自了知。",
        "from": "T14n0489_017:0745c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0745c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修如是十種法者，善自了知。",
        "from": "T14n0489_017:0745c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又，善男子！",
        "from": "T14n0489_017:0745c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修十種法者，善知世間。",
        "from": "T14n0489_017:0745c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十？",
        "from": "T14n0489_017:0745c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、見高倨人能自卑下；",
        "from": "T14n0489_017:0745c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、見我慢人能離憍慢；",
        "from": "T14n0489_017:0745c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、見諂曲人能立正直；",
        "from": "T14n0489_017:0745c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者見妄語人為說實語；",
        "from": "T14n0489_017:0745c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、見惡語人為說愛語；",
        "from": "T14n0489_017:0745c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者、見麁猛人起柔軟相；",
        "from": "T14n0489_017:0745c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者、見恚惡人能多忍辱；",
        "from": "T14n0489_017:0745c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者、見毒害人為起慈心；",
        "from": "T14n0489_017:0745c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者、見苦惱人為生悲愍；",
        "from": "T14n0489_017:0745c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者、見慳悋人為行布施。",
        "from": "T14n0489_017:0745c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0745c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修如是十種法者，善知世間。",
        "from": "T14n0489_017:0745c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又，善男子！",
        "from": "T14n0489_017:0745c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修十種法者，得生清淨諸佛剎土。",
        "from": "T14n0489_017:0745c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十？",
        "from": "T14n0489_017:0745c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、具戒清淨不斷不雜，復無染污戒行成就；",
        "from": "T14n0489_017:0745c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、行平等心，為一切有情設平等方便；",
        "from": "T14n0489_017:0746a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、成就廣大善根非尠少故；",
        "from": "T14n0489_017:0746a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、遠離世間名聞利養等事復不染著；",
        "from": "T14n0489_017:0746a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、具於淨信無疑惑心；",
        "from": "T14n0489_017:0746a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者、發勤精進捨離懈怠；",
        "from": "T14n0489_017:0746a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者、具修禪定無散亂心；",
        "from": "T14n0489_017:0746a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者、修習多聞而無惡慧；",
        "from": "T14n0489_017:0746a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者、利根利慧無暗鈍性；",
        "from": "T14n0489_017:0746a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者、廣行慈行無損害心。",
        "from": "T14n0489_017:0746a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0746a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修如是十種法者，即生清淨諸佛剎土。",
        "from": "T14n0489_017:0746a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」爾時，除蓋障菩薩白佛言：",
        "from": "T14n0489_017:0746a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何世尊為具修十法乃得生邪？",
        "from": "T14n0489_017:0746a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為隨修一法無所缺壞亦得生邪？",
        "from": "T14n0489_017:0746a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T14n0489_017:0746a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善男子！",
        "from": "T14n0489_017:0746a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若隨修一法不斷不壞，無雜無染清淨潔白，即能成就餘諸法行。",
        "from": "T14n0489_017:0746a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0746a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中意者，若能具修諸法無所缺減，生淨佛剎決定無疑。",
        "from": "T14n0489_017:0746a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又，善男子！",
        "from": "T14n0489_017:0746a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修十種法者，不染胎藏垢穢而生。",
        "from": "T14n0489_017:0746a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十？",
        "from": "T14n0489_017:0746a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、修治如來形像；",
        "from": "T14n0489_017:0746a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、嚴飾破故塔廟；",
        "from": "T14n0489_017:0746a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、妙香塗治如來寶塔；",
        "from": "T14n0489_017:0746a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者以妙香水洗沐佛像；",
        "from": "T14n0489_017:0746a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、泥飾塗補掃除濺灑如來塔地；",
        "from": "T14n0489_017:0746a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者、恭事父母；",
        "from": "T14n0489_017:0746a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者、恭事軌範之師及親教師、同梵行等；",
        "from": "T14n0489_017:0746a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者、雖復如是無所悕望；",
        "from": "T14n0489_017:0746a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者、即以如是所有善根而用迴向，願以此善普令一切有情不染胎藏垢穢而生；",
        "from": "T14n0489_017:0746a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者、深心志固。",
        "from": "T14n0489_017:0746a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0746a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修如是十種法者，得不染胎藏垢穢而生。",
        "from": "T14n0489_017:0746a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「又，善男子！",
        "from": "T14n0489_017:0746a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修十種法者，即能在家出家。",
        "from": "T14n0489_017:0746a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十？",
        "from": "T14n0489_017:0746a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、得無所取；",
        "from": "T14n0489_017:0746a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、不雜亂住；",
        "from": "T14n0489_017:0746a25_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、棄背諸境；",
        "from": "T14n0489_017:0746a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、遠離諸境一切愛著；",
        "from": "T14n0489_017:0746a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者、不染諸境所有過失；",
        "from": "T14n0489_017:0746a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者、能於如來所設學門恭敬修習，加復勤力而無厭足；",
        "from": "T14n0489_017:0746a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者、雖復少分得其飲食衣服臥具病緣醫藥，心常喜足；",
        "from": "T14n0489_017:0746b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者、隨得應器衣服離諸取著；",
        "from": "T14n0489_017:0746b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者、厭離諸境常生怖畏；",
        "from": "T14n0489_017:0746b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者、常勤修習現前寂靜。",
        "from": "T14n0489_017:0746b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T14n0489_017:0746b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若修如是十種法者，即能在家出家。",
        "from": "T14n0489_017:0746b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說除蓋障菩薩所問經卷第十七",
        "from": "T14n0489_017:0746b05_100",
        "context_with_next_sentence": false
    }
]