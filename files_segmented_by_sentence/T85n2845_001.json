[
    {
        "source_sentence": "押座文類",
        "from": "T85n2845_001:1297a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩經押座文維摩經押座文",
        "from": "T85n2845_001:1297a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮上方香積世　　妙喜如來化相身",
        "from": "T85n2845_001:1297a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是有妻兒眷屬徒　　心淨常修於梵行",
        "from": "T85n2845_001:1297a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智力神通難可測　　手搖日月動須彌",
        "from": "T85n2845_001:1297a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我佛如來在菴薗　　宣說甚深普集教",
        "from": "T85n2845_001:1297a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者身心歡喜了　　持其寶蓋詣如來",
        "from": "T85n2845_001:1297a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏偏搖動布金雲鈴　　七寶雙雙香送遠",
        "from": "T85n2845_001:1297a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直到菴薗法會上　　捧其寶蓋上如來",
        "from": "T85n2845_001:1297a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百花蓋立其前　　聖力合成為壹蓋",
        "from": "T85n2845_001:1297a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月星辰皆總現　　山河大地及龍宮",
        "from": "T85n2845_001:1297a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世界搖時寶蓋搖　　世界動時動寶蓋動",
        "from": "T85n2845_001:1297a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切十方諸淨土　　三世如來悉現中",
        "from": "T85n2845_001:1297a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘耶離國地中心　　寶樹光暉金璨爛",
        "from": "T85n2845_001:1297a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多出人賢性慈愍　　欠曾過去早修行",
        "from": "T85n2845_001:1297a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士維摩眾中尊　　十德圓明人所重",
        "from": "T85n2845_001:1297a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近無邊三世佛　　故號維摩長者身",
        "from": "T85n2845_001:1297a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百聲聞皆被訶　　住相法空分所證",
        "from": "T85n2845_001:1297a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更有光嚴彌勒眾　　身心皆拜道徒中",
        "from": "T85n2845_001:1297a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不二真門性自融　　只有維摩親證悟",
        "from": "T85n2845_001:1297a31_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示病室中而獨臥　　廣談六品不思議",
        "from": "T85n2845_001:1297a32_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大聖牟尼悲願深　　一一親呼十大眾",
        "from": "T85n2845_001:1297a34_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆曰不堪而問疾　　唯有文殊千佛師",
        "from": "T85n2845_001:1297a35_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巍巍身動寶星宮　　岌岌珠搖飛寶座",
        "from": "T85n2845_001:1297b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬仙人香滿國　　千千聖眾遍長空",
        "from": "T85n2845_001:1297b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請飯上方香積中　　化座燈王師子吼",
        "from": "T85n2845_001:1297b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡到毘耶方丈室　　作其佛事對弘揚",
        "from": "T85n2845_001:1297b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今晨擬說甚深經　　惟願慈悲來至此",
        "from": "T85n2845_001:1297b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽眾聞經罪消滅　　總證菩提法寶身",
        "from": "T85n2845_001:1297b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火宅茫茫何日休　　五欲終招生死苦",
        "from": "T85n2845_001:1297b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不似聽經求解脫　　學佛修行能不能",
        "from": "T85n2845_001:1297b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能者虔恭合掌著　　經題名目唱將來",
        "from": "T85n2845_001:1297b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常嗟多劫處輪迴　　末法世中多障難　　慚愧",
        "from": "T85n2845_001:1297b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向娑婆世界作舟船　　五濁劫中為導首　　只",
        "from": "T85n2845_001:1297b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見人造惡處強攢頭　　聞道說經則伴不採",
        "from": "T85n2845_001:1297b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今生少善不曾作　　來世覓人身大曬難",
        "from": "T85n2845_001:1297b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知不覺大忙忙　　不怕不驚長造罪　　若不",
        "from": "T85n2845_001:1297b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今朝希過大乘經　　似見優曇花一種　　暫解",
        "from": "T85n2845_001:1297b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪王髻寶此時逢　　窮子衣珠今日得　　十法",
        "from": "T85n2845_001:1297b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既能來至道場中　　定是願聞微妙法　　樂者",
        "from": "T85n2845_001:1297b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今朝法師說其真　　坐下聽眾莫因修　　念佛",
        "from": "T85n2845_001:1297b31_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從兜率降人間　　先向王宮示生相　　九龍",
        "from": "T85n2845_001:1297c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖主摩耶往後薗　　頻妃婇女走樂喧　　魚透",
        "from": "T85n2845_001:1297c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無憂花樹葉敷榮　　夫人彼中縵步行　　舉手",
        "from": "T85n2845_001:1297c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦慈父降生來　　還從左脇出身胎　　九龍",
        "from": "T85n2845_001:1297c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿斯陀仙啟大王　　太子瑞應□貞祥　　不是",
        "from": "T85n2845_001:1297c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前生與殿下結良緣　　賤妾如今豈敢專　　是",
        "from": "T85n2845_001:1297c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長曳不戀世榮華　　厭患深宮為太子　　捨却",
        "from": "T85n2845_001:1297c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六年苦行在山中　　鳥獸同居為伴侶　　長飢",
        "from": "T85n2845_001:1297c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得證菩提樹下身　　降伏眾魔成正覺　　鷲領",
        "from": "T85n2845_001:1297c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先開有教益群情　　次說空宗令悟解　　後向",
        "from": "T85n2845_001:1297c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈山談妙法益今利後不思議　　今晨擬說此甚深經。",
        "from": "T85n2845_001:1297c22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願慈悲來至此聽眾聞經願罪滅消就中地是悲哀。",
        "from": "T85n2845_001:1297c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫到成南便不迴。",
        "from": "T85n2845_001:1297c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侵晨行早尋沙逕。",
        "from": "T85n2845_001:1297c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "博暮休程傍求糧。",
        "from": "T85n2845_001:1297c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憶兒母子應長料。",
        "from": "T85n2845_001:1297c25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應須會裏見如來。",
        "from": "T85n2845_001:1297c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日講經功德行。",
        "from": "T85n2845_001:1297c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願因蓬便早歸來。",
        "from": "T85n2845_001:1297c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就中此地是別離。",
        "from": "T85n2845_001:1297c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每夜唯聞處處悲。",
        "from": "T85n2845_001:1297c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "借問因何懷悵惆。",
        "from": "T85n2845_001:1297c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昨朝強賊捉余兒。",
        "from": "T85n2845_001:1297c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孤貧臨老遭如此。",
        "from": "T85n2845_001:1297c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟告黃天願照之。",
        "from": "T85n2845_001:1297c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儻令母子重相見。",
        "from": "T85n2845_001:1298a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如枯樹再生枝。",
        "from": "T85n2845_001:1298a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子布施一索分難之時。",
        "from": "T85n2845_001:1298a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願平美陪兒早出來久住令賤。",
        "from": "T85n2845_001:1298a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方日沒西方照。",
        "from": "T85n2845_001:1298a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫道西沈日便無。",
        "from": "T85n2845_001:1298a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方入滅化餘方。",
        "from": "T85n2845_001:1298a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫道世尊真滅度。",
        "from": "T85n2845_001:1298a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如長天有月被浮云障翳不出來。",
        "from": "T85n2845_001:1298a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身中有佛性甚分明。",
        "from": "T85n2845_001:1298a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被業障覆藏都不現。",
        "from": "T85n2845_001:1298a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲長空月現先須要假細狂風。",
        "from": "T85n2845_001:1298a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得身中佛性明事須懃聽大乘。",
        "from": "T85n2845_001:1298a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從纔云被狂風吹散去。",
        "from": "T85n2845_001:1298a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月影長空便出來。",
        "from": "T85n2845_001:1298a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在聽甚深微妙法。",
        "from": "T85n2845_001:1298a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身中佛性甚分明。",
        "from": "T85n2845_001:1298a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一沾兩沾二沾雨。",
        "from": "T85n2845_001:1298a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅却衢中多少塵。",
        "from": "T85n2845_001:1298a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一句兩句大乘經。",
        "from": "T85n2845_001:1298a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅却身中多少罪。",
        "from": "T85n2845_001:1298a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我擬請佛恐人坐。",
        "from": "T85n2845_001:1298a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多時便擬說經。",
        "from": "T85n2845_001:1298a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願不願者檢心掌待。",
        "from": "T85n2845_001:1298a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方還有白銀臺。",
        "from": "T85n2845_001:1298a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾聽法心總開。",
        "from": "T85n2845_001:1298a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願聞法者合掌著。",
        "from": "T85n2845_001:1298a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都講經題唱將來。",
        "from": "T85n2845_001:1298a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溫室經講唱押座文溫室經講唱押座文頂禮上方大覺尊。",
        "from": "T85n2845_001:1298a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命難思清淨眾。",
        "from": "T85n2845_001:1298a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四智三身隨眾願。",
        "from": "T85n2845_001:1298a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲丈六釋迦文。",
        "from": "T85n2845_001:1298a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬劫作輪王。",
        "from": "T85n2845_001:1298a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不樂王宮恩愛事。",
        "from": "T85n2845_001:1298a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨命捨身千萬劫。",
        "from": "T85n2845_001:1298a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直至今身證菩提。",
        "from": "T85n2845_001:1298a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死海中久沈淪。",
        "from": "T85n2845_001:1298a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺不知業力引。",
        "from": "T85n2845_001:1298a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垢障消除今覩佛。",
        "from": "T85n2845_001:1298a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光照三千世界中。",
        "from": "T85n2845_001:1298a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘耶離國有菴園。",
        "from": "T85n2845_001:1298a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈女還生奈花中。",
        "from": "T85n2845_001:1298a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶樹枝條光色好。",
        "from": "T85n2845_001:1298a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非凡非聖化生身。",
        "from": "T85n2845_001:1298a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇域還從奈女生。",
        "from": "T85n2845_001:1298a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙通法術救眾生。",
        "from": "T85n2845_001:1298a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能療眾病一切差。",
        "from": "T85n2845_001:1298a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國稱之寶大醫王。",
        "from": "T85n2845_001:1298a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父號祇婆慈慜賢。",
        "from": "T85n2845_001:1298a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下針之疾立輕便。",
        "from": "T85n2845_001:1298a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名高八國為長者。",
        "from": "T85n2845_001:1298a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴喪起死閻浮中。",
        "from": "T85n2845_001:1298a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇域思念牟尼尊。",
        "from": "T85n2845_001:1298a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明□勅家俱詣佛。",
        "from": "T85n2845_001:1298a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直到靈山法會上。",
        "from": "T85n2845_001:1298a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請佛沐浴及凡僧。",
        "from": "T85n2845_001:1298a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說七物各有功。",
        "from": "T85n2845_001:1298a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不□祈願浴法身。",
        "from": "T85n2845_001:1298a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香湯能淨凡聖眾。",
        "from": "T85n2845_001:1298a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德無量滿願中。",
        "from": "T85n2845_001:1298b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今晨擬說甚深文。",
        "from": "T85n2845_001:1298b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願慈悲來至此。",
        "from": "T85n2845_001:1298b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽眾聞經罪消滅。",
        "from": "T85n2845_001:1298b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總證菩提法寶身。",
        "from": "T85n2845_001:1298b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻浮濁惡實堪悲。",
        "from": "T85n2845_001:1298b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老病終朝長似醉。",
        "from": "T85n2845_001:1298b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已捨喧求出離。",
        "from": "T85n2845_001:1298b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐聽經能不能。",
        "from": "T85n2845_001:1298b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能者虔恭合掌著。",
        "from": "T85n2845_001:1298b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經題名字唱將來。",
        "from": "T85n2845_001:1298b05_4",
        "context_with_next_sentence": true
    }
]