[
    {
        "source_sentence": "9大般涅槃經集解卷第四十四",
        "from": "T37n1763_044:0513a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嬰兒行品第二十一",
        "from": "T37n1763_044:0513a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛為阿闍世王說二十法門",
        "from": "T37n1763_044:0513a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　辨嬰兒行梵行品之第九爾時佛告諸大眾言至猶如微妙真金之山。",
        "from": "T37n1763_044:0513a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶有疑佛不垂慈救，罪不得滅。",
        "from": "T37n1763_044:0513a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知無定相者，定罪以煩惱為定也。",
        "from": "T37n1763_044:0513a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無定定者，無定疑心。",
        "from": "T37n1763_044:0513a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑心定者，一斷不起。",
        "from": "T37n1763_044:0513a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊出八種聲至禮敬畢已却坐一面。",
        "from": "T37n1763_044:0513a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言大王者，不直稱名，懼其喜過，漸開其心也。",
        "from": "T37n1763_044:0513a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上大師者，知佛慈等，真一切智也。",
        "from": "T37n1763_044:0513a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰：",
        "from": "T37n1763_044:0513a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五佛命大王以定其心。",
        "from": "T37n1763_044:0513a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告阿闍世王言至心則放逸無惡不造。",
        "from": "T37n1763_044:0513b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王不發菩提心，罪不可滅。",
        "from": "T37n1763_044:0513b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心者，由見凡夫之過。",
        "from": "T37n1763_044:0513b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此二十事，說凡夫之過也。",
        "from": "T37n1763_044:0513b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0513b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六為王說法也。",
        "from": "T37n1763_044:0513b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十一翻，此即第一先命觀二十事。",
        "from": "T37n1763_044:0513b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就身為其相既淺，如似伏惑。",
        "from": "T37n1763_044:0513b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍世言：",
        "from": "T37n1763_044:0513b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我解佛所說義至必定當墮阿鼻地獄。",
        "from": "T37n1763_044:0513b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上雖說戒等五法無常，王愛罪影，猶未怗也。",
        "from": "T37n1763_044:0513b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍世王白佛言世尊至是故當知殺無定相。",
        "from": "T37n1763_044:0513b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去其封罪之報，便從理得解也。",
        "from": "T37n1763_044:0513b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0513b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來至此，且一往總為王說法，以虛忘也。",
        "from": "T37n1763_044:0513b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0513b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所言父王無辜至若九非者則應無罪。",
        "from": "T37n1763_044:0513b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二為說生法二空。",
        "from": "T37n1763_044:0513b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其觀既深，如似斷惑也。",
        "from": "T37n1763_044:0513b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0513b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下別為王說法，先開五門，後更以五階釋此門也。",
        "from": "T37n1763_044:0513b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即第一門，就假名義中說法以除其罪。",
        "from": "T37n1763_044:0513b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂若能解萬法虛假即空，而有為妄有，罪何從生？",
        "from": "T37n1763_044:0513b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛其心故，則無實罪也。",
        "from": "T37n1763_044:0513b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0513b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色有三種過去未來至云何說言定入地獄。",
        "from": "T37n1763_044:0513b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五門破定罪相，成王所解也。",
        "from": "T37n1763_044:0513b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一門，說是假名無有定相。",
        "from": "T37n1763_044:0513b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0513b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三翻就三世分之，則無罪也。",
        "from": "T37n1763_044:0513b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0513b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一眾所作罪業至汝獨云何而得業耶。",
        "from": "T37n1763_044:0513b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二門，明一者心念教能殺人、二者心口殺、三者具身口殺。",
        "from": "T37n1763_044:0513b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王不具三業，故罪輕也。",
        "from": "T37n1763_044:0513b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0513b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四翻明三業具則罪重。",
        "from": "T37n1763_044:0513b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但有心口而無身業，罪則輕也。",
        "from": "T37n1763_044:0513b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0513c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明罪福不在因緣中。",
        "from": "T37n1763_044:0513c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0513c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頻婆娑羅往有惡心至云何而言定入地獄。",
        "from": "T37n1763_044:0513c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三門，明惡有下中上也。",
        "from": "T37n1763_044:0513c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下者，謂彼怨我，我還以惡報也；",
        "from": "T37n1763_044:0513c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中者，無恩於我，以惡加人也；",
        "from": "T37n1763_044:0513c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上者，有恩於我，又加其惡。",
        "from": "T37n1763_044:0513c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王是下惡也。",
        "from": "T37n1763_044:0513c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0513c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五舉昔業緣起富羅山事。",
        "from": "T37n1763_044:0513c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0513c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三明先王以宿業所招，非其創罪之始。",
        "from": "T37n1763_044:0513c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0513c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生狂惑凡有四種至若非本心云何得罪。",
        "from": "T37n1763_044:0513c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四門，明殺有三，謂重者邪見殺也、中者瞋殺也、下者貪殺也。",
        "from": "T37n1763_044:0513c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王以狂亂心殺，故非定也。",
        "from": "T37n1763_044:0513c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0513c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六舉貪狂以遺其心也。",
        "from": "T37n1763_044:0513c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0513c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生作罪，皆由不自在故。",
        "from": "T37n1763_044:0513c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能識此罪源，則無罪矣。",
        "from": "T37n1763_044:0513c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0513c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如幻師於四衢道至諸佛世尊知其非真。",
        "from": "T37n1763_044:0513c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五，重門也。",
        "from": "T37n1763_044:0513c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0513c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七有六譬，證上第二生法二空，故罪不可得也。",
        "from": "T37n1763_044:0513c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0513c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五有十譬。",
        "from": "T37n1763_044:0513c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法體性空無自性，故殺無定。",
        "from": "T37n1763_044:0513c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0513c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺法殺業殺者殺果至雖復因王王實無罪。",
        "from": "T37n1763_044:0513c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重顯前第二門也。",
        "from": "T37n1763_044:0513c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0513c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八證上第四王但知殺，而身不自殺，則無罪也。",
        "from": "T37n1763_044:0513c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0513c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋上第二，因緣中無罪性也。",
        "from": "T37n1763_044:0513c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0513c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如王宮中常勅屠羊至於父先王生重憂苦。",
        "from": "T37n1763_044:0513c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重顯前第二門也。",
        "from": "T37n1763_044:0513c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0513c25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋上第三門，宿業中無罪也。",
        "from": "T37n1763_044:0513c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0513c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間之人是愛僮僕至王不自在當有何咎。",
        "from": "T37n1763_044:0513c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0513c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重顯前第四門也。",
        "from": "T37n1763_044:0513c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0513c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九，成上第六，罪由貪狂。",
        "from": "T37n1763_044:0513c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0513c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋第四門，貪狂也。",
        "from": "T37n1763_044:0514a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0514a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如涅槃非有非無至無有見者則無果報。",
        "from": "T37n1763_044:0514a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_044:0514a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十舉世諦，涅槃是有，說有罪。",
        "from": "T37n1763_044:0514a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常見之人則為非有至非有非無而亦是有。",
        "from": "T37n1763_044:0514a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重顯前第五門也。",
        "from": "T37n1763_044:0514a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0514a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋上第五門，萬有體空，無性罪也。",
        "from": "T37n1763_044:0514a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於有慚愧者，則是非有。",
        "from": "T37n1763_044:0514a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以爾？",
        "from": "T37n1763_044:0514a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既生慚愧心，達萬法體虛，故於人為無罪也。",
        "from": "T37n1763_044:0514a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於無慚愧者，是則非無也。",
        "from": "T37n1763_044:0514a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受果報者，名之為有。",
        "from": "T37n1763_044:0514a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂無智人終日構因得果，是以不無也。",
        "from": "T37n1763_044:0514a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空見之人則非有者，謂於此人便無性報也。",
        "from": "T37n1763_044:0514a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有見之人非無者，謂於報相者便不無果報也。",
        "from": "T37n1763_044:0514a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有有見者，謂計常之人為有也。",
        "from": "T37n1763_044:0514a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有見者，若無向執相，終無果報也。",
        "from": "T37n1763_044:0514a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常見之人者，此是解常之心，故於此人為無也。",
        "from": "T37n1763_044:0514a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常見者，若觀生死令佛盡作無常，則不無果報之生死也。",
        "from": "T37n1763_044:0514a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常常見者，此是計常之人，不無於惡果也。",
        "from": "T37n1763_044:0514a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以見義故者，經云「於解者為非有，於不解者為非無」也。",
        "from": "T37n1763_044:0514a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T37n1763_044:0514a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫眾生者名出入息至不入地獄汝云何入。",
        "from": "T37n1763_044:0514a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重顯前第一門。",
        "from": "T37n1763_044:0514a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0514a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十一翻，正說法之宗也。",
        "from": "T37n1763_044:0514a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時阿闍世王如佛所說至諸法無常苦空無我。",
        "from": "T37n1763_044:0514a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既已得解，即於佛所得不壞信也。",
        "from": "T37n1763_044:0514a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0514a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若解假名是虛者，則無罪而不滅也。",
        "from": "T37n1763_044:0514a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊！",
        "from": "T37n1763_044:0514a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見世間從伊蘭子至受大苦惱不以為苦。",
        "from": "T37n1763_044:0514a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廢其非分。",
        "from": "T37n1763_044:0514a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時摩伽國無量人民至即是一切諸佛弟子。",
        "from": "T37n1763_044:0514b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "己身天身者，因中說果耳。",
        "from": "T37n1763_044:0514b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0514b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前言為闍世住者，義現於此。",
        "from": "T37n1763_044:0514b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是語已即以種種至了了見佛性猶如文殊等。",
        "from": "T37n1763_044:0514b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初九行半歎佛，次六行自發心也。",
        "from": "T37n1763_044:0514b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前九行半中，初三行總歎口四業，次一行半別歎不惡口，次一行歎不綺語，次二行說語之益物也，次二行歎慈悲也。",
        "from": "T37n1763_044:0514b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊讚阿闍世王至天行品者如雜華說。",
        "from": "T37n1763_044:0514b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚述所歎也。",
        "from": "T37n1763_044:0514b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "21 嬰兒行品(四四)嬰兒行品第二十一案僧宗曰：",
        "from": "T37n1763_044:0514b10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備行三行，其德則喻如嬰兒，亦是化嬰兒也。",
        "from": "T37n1763_044:0514b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品有三段：",
        "from": "T37n1763_044:0514b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一譬佛；",
        "from": "T37n1763_044:0514b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二從「不知苦樂」以下，譬菩薩；",
        "from": "T37n1763_044:0514b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三「又如嬰兒」以下，譬眾生。",
        "from": "T37n1763_044:0514b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明昔所以須說五乘之教也。",
        "from": "T37n1763_044:0514b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_044:0514b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品有五段。",
        "from": "T37n1763_044:0514b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一明佛自作嬰兒；",
        "from": "T37n1763_044:0514b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明菩薩作嬰兒；",
        "from": "T37n1763_044:0514b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三明佛方便為化；",
        "from": "T37n1763_044:0514b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四明佛說二乘之果以為真極；",
        "from": "T37n1763_044:0514b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五明為斷見者說有實眾生也。",
        "from": "T37n1763_044:0514b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_044:0514b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何名為嬰兒行至斷於無常是名嬰兒行。",
        "from": "T37n1763_044:0514b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_044:0514b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一譬也。",
        "from": "T37n1763_044:0514b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又嬰兒者不知苦樂至而作聲聞辟支佛乘。",
        "from": "T37n1763_044:0514b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便誘引，不即法實。",
        "from": "T37n1763_044:0514b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以業為譬，下是其正體。",
        "from": "T37n1763_044:0514b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來菩薩以譬嬰兒者，義似嬰兒，廣其非行體也。",
        "from": "T37n1763_044:0514b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者？",
        "from": "T37n1763_044:0514b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫中云：",
        "from": "T37n1763_044:0514b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來有嬰兒行，無有是處。",
        "from": "T37n1763_044:0514b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之證也。",
        "from": "T37n1763_044:0514b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可佛菩薩是嬰兒行本，名嬰兒行也。",
        "from": "T37n1763_044:0514b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_044:0514b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二譬也。",
        "from": "T37n1763_044:0514b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又嬰兒行者如彼嬰兒至然此黃葉實非金也。",
        "from": "T37n1763_044:0514b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三譬。",
        "from": "T37n1763_044:0514b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說三十三天之樂，以免三塗苦也。",
        "from": "T37n1763_044:0514b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木牛木馬木男木女至男女想故名曰嬰兒。",
        "from": "T37n1763_044:0514b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案寶亮曰：",
        "from": "T37n1763_044:0514c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木牛即第四譬，為說二乘果也。",
        "from": "T37n1763_044:0514c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木男即第五譬，為斷見者說有眾生也。",
        "from": "T37n1763_044:0514c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來亦爾若有眾生至亦皆同汝得是五行。",
        "from": "T37n1763_044:0514c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_044:0514c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先總以三法為譬，楊葉譬人天乘四果；",
        "from": "T37n1763_044:0514c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛馬人天等一乘男女譬眾生；",
        "from": "T37n1763_044:0514c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啼哭譬造惡業。",
        "from": "T37n1763_044:0514c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十三天者，別合楊葉。",
        "from": "T37n1763_044:0514c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以明者，凡著有不說涅槃。",
        "from": "T37n1763_044:0514c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「眾生厭時至二乘之實」則合牛馬。",
        "from": "T37n1763_044:0514c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以然者，以厭生死者，不說人天因也。",
        "from": "T37n1763_044:0514c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有斷不斷者，智煩惱斷，習不斷也。",
        "from": "T37n1763_044:0514c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已下類爾。",
        "from": "T37n1763_044:0514c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「非金中生金想至而說為淨」，總合上四果為淨。",
        "from": "T37n1763_044:0514c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「於非牛馬作牛馬想至說非道為道」，總合四乘為道。",
        "from": "T37n1763_044:0514c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說假名眾生，合男女別墮邪見，墮斷滅也。",
        "from": "T37n1763_044:0514c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故如來說有眾生者，說假名眾生，除其斷見。",
        "from": "T37n1763_044:0514c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於眾生中作眾生想者，說計我者普也。",
        "from": "T37n1763_044:0514c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於眾生破眾生見者，明說假名眾生亦破常見，不但此也。",
        "from": "T37n1763_044:0514c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第四十四",
        "from": "T37n1763_044:0514c17_100",
        "context_with_next_sentence": false
    }
]