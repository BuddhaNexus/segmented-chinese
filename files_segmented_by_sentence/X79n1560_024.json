{
    "X79n1560_024:0538c03_0": "禪林僧寶傳卷第二十四",
    "X79n1560_024:0538c05_0": "宋明白庵居沙門　洪惠　撰",
    "X79n1560_024:0538c06_0": "仰山偉禪師",
    "X79n1560_024:0538c07_0": "禪師名行偉。",
    "X79n1560_024:0538c07_1": "生于氏。",
    "X79n1560_024:0538c07_2": "大名人也。",
    "X79n1560_024:0538c07_3": "幼寡笑語。",
    "X79n1560_024:0538c07_4": "頺然地坐終日。",
    "X79n1560_024:0538c08_5": "伏犀插額。",
    "X79n1560_024:0538c08_6": "眉目疎秀。",
    "X79n1560_024:0538c08_7": "人皆異之。",
    "X79n1560_024:0538c08_8": "年十九。",
    "X79n1560_024:0538c08_9": "遊京師。",
    "X79n1560_024:0538c09_0": "聞寶相寺大乘師。",
    "X79n1560_024:0538c09_1": "方益有鑒裁。",
    "X79n1560_024:0538c09_2": "謁之。",
    "X79n1560_024:0538c09_3": "益曰。",
    "X79n1560_024:0538c09_4": "君風神不凡。",
    "X79n1560_024:0538c10_5": "然非凌煙麒麟所宜置。",
    "X79n1560_024:0538c10_6": "正當袒肩荷擔如來。",
    "X79n1560_024:0538c10_7": "乃稱耳。",
    "X79n1560_024:0538c11_8": "偉欣然曰。",
    "X79n1560_024:0538c11_9": "此吾心也。",
    "X79n1560_024:0538c11_10": "願執役掃除。",
    "X79n1560_024:0538c11_11": "益以講學聚徒。",
    "X79n1560_024:0538c12_0": "偉甘勤力。",
    "X79n1560_024:0538c12_1": "挽車運粟。",
    "X79n1560_024:0538c12_2": "破薪佐炊。",
    "X79n1560_024:0538c12_3": "無所不為者。",
    "X79n1560_024:0538c12_4": "十三年。",
    "X79n1560_024:0538c13_0": "乃剃落受具。",
    "X79n1560_024:0538c13_1": "辭益經行諸方。",
    "X79n1560_024:0538c13_2": "益令入洛。",
    "X79n1560_024:0538c13_3": "遂受賢首教於太三藏。",
    "X79n1560_024:0538c14_4": "成名繼其席常千人。",
    "X79n1560_024:0538c14_5": "講無定居。",
    "X79n1560_024:0538c14_6": "南游門弟子。",
    "X79n1560_024:0538c15_7": "有願隨者。",
    "X79n1560_024:0538c15_8": "偉不却。",
    "X79n1560_024:0538c15_9": "至淮上。",
    "X79n1560_024:0538c15_10": "所至禪林。",
    "X79n1560_024:0538c15_11": "盛藉藉聞宗師名。",
    "X79n1560_024:0538c16_12": "心怪之。",
    "X79n1560_024:0538c16_13": "舘淮山古寺。",
    "X79n1560_024:0538c16_14": "見昔同學法亮黲衲勃窣。",
    "X79n1560_024:0538c17_0": "高其衣裙。",
    "X79n1560_024:0538c17_1": "布纏兩脛。",
    "X79n1560_024:0538c17_2": "驚曰。",
    "X79n1560_024:0538c17_3": "亮亦逃矣。",
    "X79n1560_024:0538c17_4": "呼俱行者。",
    "X79n1560_024:0538c17_5": "聚觀太息。",
    "X79n1560_024:0538c18_6": "亮笑敘寒溫而已。",
    "X79n1560_024:0538c18_7": "偉問曰。",
    "X79n1560_024:0538c18_8": "汝今稱禪者。",
    "X79n1560_024:0538c18_9": "禪宗奧義語我來。",
    "X79n1560_024:0538c19_10": "亮曰。",
    "X79n1560_024:0538c19_11": "待我死後。",
    "X79n1560_024:0538c19_12": "為汝敷說。",
    "X79n1560_024:0538c19_13": "偉曰。",
    "X79n1560_024:0538c19_14": "狂耶。",
    "X79n1560_024:0538c19_15": "亮曰。",
    "X79n1560_024:0538c20_0": "我狂已息。",
    "X79n1560_024:0538c20_1": "汝今方熾。",
    "X79n1560_024:0538c20_2": "即趨去。",
    "X79n1560_024:0538c20_3": "偉請其屬曰。",
    "X79n1560_024:0538c20_4": "亮聞見淹愽。",
    "X79n1560_024:0538c21_5": "知法解義倍我。",
    "X79n1560_024:0538c21_6": "今甘爾。",
    "X79n1560_024:0538c21_7": "禪家。",
    "X79n1560_024:0538c21_8": "必有長處。",
    "X79n1560_024:0538c21_9": "乃獨行詣黃蘗。",
    "X79n1560_024:0538c22_10": "謁南禪師。",
    "X79n1560_024:0538c22_11": "依止二年。",
    "X79n1560_024:0538c22_12": "每造室。",
    "X79n1560_024:0538c22_13": "南公必斂目。",
    "X79n1560_024:0538c22_14": "良久乃語。",
    "X79n1560_024:0538c23_15": "偉曰。",
    "X79n1560_024:0538c23_16": "和尚見行偉。",
    "X79n1560_024:0538c23_17": "必合眼何耶。",
    "X79n1560_024:0538c23_18": "曰。",
    "X79n1560_024:0538c23_19": "麻谷見良遂來。",
    "X79n1560_024:0538c24_20": "荷鋤鋤草。",
    "X79n1560_024:0538c24_21": "良遂有悟處。",
    "X79n1560_024:0538c24_22": "我見汝來。",
    "X79n1560_024:0538c24_23": "但閑閉目。",
    "X79n1560_024:0538c24_24": "汝雖無悟。",
    "X79n1560_024:0539a01_25": "然且有疑。",
    "X79n1560_024:0539a01_26": "尚亦可在。",
    "X79n1560_024:0539a01_27": "偉滋不曉。",
    "X79n1560_024:0539a01_28": "時泐潭月禪師。",
    "X79n1560_024:0539a02_0": "與南公同坐夏積翠。",
    "X79n1560_024:0539a02_1": "月以經論有聲。",
    "X79n1560_024:0539a02_2": "偉甞侍座。",
    "X79n1560_024:0539a02_3": "聽其談論。",
    "X79n1560_024:0539a03_4": "因讀小釋迦傳曰。",
    "X79n1560_024:0539a03_5": "韋尚書問仰山寂公。",
    "X79n1560_024:0539a03_6": "禪師尋常如何接人。",
    "X79n1560_024:0539a04_7": "寂曰。",
    "X79n1560_024:0539a04_8": "僧來必問來為何事。",
    "X79n1560_024:0539a04_9": "曰來親覲。",
    "X79n1560_024:0539a04_10": "又問。",
    "X79n1560_024:0539a05_11": "還見老僧否。",
    "X79n1560_024:0539a05_12": "曰見。",
    "X79n1560_024:0539a05_13": "又問。",
    "X79n1560_024:0539a05_14": "老僧何似驢。",
    "X79n1560_024:0539a05_15": "僧未有詶者。",
    "X79n1560_024:0539a06_0": "韋曰。",
    "X79n1560_024:0539a06_1": "若言見。",
    "X79n1560_024:0539a06_2": "爭奈驢。",
    "X79n1560_024:0539a06_3": "若言不見。",
    "X79n1560_024:0539a06_4": "今禮覲誰。",
    "X79n1560_024:0539a06_5": "以此故難答。",
    "X79n1560_024:0539a07_6": "寂曰。",
    "X79n1560_024:0539a07_7": "無人如尚書辯析者耳。",
    "X79n1560_024:0539a07_8": "月公稱善。",
    "X79n1560_024:0539a07_9": "偉亦以為然。",
    "X79n1560_024:0539a08_10": "南公獨曰。",
    "X79n1560_024:0539a08_11": "溈仰宗枝。",
    "X79n1560_024:0539a08_12": "不到今者。",
    "X79n1560_024:0539a08_13": "病在此耳。",
    "X79n1560_024:0539a08_14": "偉日夜究思。",
    "X79n1560_024:0539a09_15": "不悟其意。",
    "X79n1560_024:0539a09_16": "將治行而西。",
    "X79n1560_024:0539a09_17": "卜庵嵩少之下。",
    "X79n1560_024:0539a09_18": "為粥飯僧。",
    "X79n1560_024:0539a10_19": "夜與一僧同侍座。",
    "X79n1560_024:0539a10_20": "僧問。",
    "X79n1560_024:0539a10_21": "法華經言。",
    "X79n1560_024:0539a10_22": "得解一切眾生語言陀羅尼。",
    "X79n1560_024:0539a11_23": "何等語是陀羅尼。",
    "X79n1560_024:0539a11_24": "南公顧香鑪。",
    "X79n1560_024:0539a11_25": "僧即引手。",
    "X79n1560_024:0539a12_26": "候火有無。",
    "X79n1560_024:0539a12_27": "無火。",
    "X79n1560_024:0539a12_28": "又就添以炷香。",
    "X79n1560_024:0539a12_29": "仍依位而立。",
    "X79n1560_024:0539a12_30": "南公笑曰。",
    "X79n1560_024:0539a13_31": "是此陀羅尼。",
    "X79n1560_024:0539a13_32": "偉驚喜。",
    "X79n1560_024:0539a13_33": "進曰。",
    "X79n1560_024:0539a13_34": "如何解。",
    "X79n1560_024:0539a13_35": "南公令僧且去。",
    "X79n1560_024:0539a14_36": "僧揭簾趨出。",
    "X79n1560_024:0539a14_37": "南公曰。",
    "X79n1560_024:0539a14_38": "若不解。",
    "X79n1560_024:0539a14_39": "爭能與麼。",
    "X79n1560_024:0539a14_40": "偉方有省。",
    "X79n1560_024:0539a15_0": "偉律身甚嚴。",
    "X79n1560_024:0539a15_1": "燕坐忘夜旦。",
    "X79n1560_024:0539a15_2": "占一室謝絕交游。",
    "X79n1560_024:0539a15_3": "有過偉者。",
    "X79n1560_024:0539a16_4": "虗己座以延之。",
    "X79n1560_024:0539a16_5": "躬起炷香。",
    "X79n1560_024:0539a16_6": "叉手而立。",
    "X79n1560_024:0539a16_7": "南公聞之以為。",
    "X79n1560_024:0539a17_8": "大絕物。",
    "X79n1560_024:0539a17_9": "非和光同塵之義。",
    "X79n1560_024:0539a17_10": "面誡之。",
    "X79n1560_024:0539a17_11": "對曰。",
    "X79n1560_024:0539a17_12": "道業未辨。",
    "X79n1560_024:0539a18_0": "歲月如流。",
    "X79n1560_024:0539a18_1": "大根器。",
    "X79n1560_024:0539a18_2": "如雲門趙州猶曰。",
    "X79n1560_024:0539a18_3": "我惟粥飯二時是雜用心。",
    "X79n1560_024:0539a19_4": "又曰。",
    "X79n1560_024:0539a19_5": "我豈有工夫閑處用。",
    "X79n1560_024:0539a19_6": "矧行偉根性。",
    "X79n1560_024:0539a19_7": "日劫相倍者。",
    "X79n1560_024:0539a20_8": "甯暇囿世情。",
    "X79n1560_024:0539a20_9": "事清談。",
    "X79n1560_024:0539a20_10": "諛悅人。",
    "X79n1560_024:0539a20_11": "增我相乎。",
    "X79n1560_024:0539a20_12": "南公賢之。",
    "X79n1560_024:0539a21_13": "熈寧二年。",
    "X79n1560_024:0539a21_14": "南公歿于黃龍。",
    "X79n1560_024:0539a21_15": "江西使者。",
    "X79n1560_024:0539a21_16": "檄宣春。",
    "X79n1560_024:0539a22_0": "厚禮致。",
    "X79n1560_024:0539a22_1": "以居仰山。",
    "X79n1560_024:0539a22_2": "未朞年。",
    "X79n1560_024:0539a22_3": "法席冠江淮。",
    "X79n1560_024:0539a22_4": "平昔同參。",
    "X79n1560_024:0539a22_5": "知名者皆集。",
    "X79n1560_024:0539a23_6": "道俗尊事之。",
    "X79n1560_024:0539a23_7": "謂之後身通智。",
    "X79n1560_024:0539a23_8": "性剛蒞事有法度。",
    "X79n1560_024:0539a24_9": "俾某人職某事。",
    "X79n1560_024:0539a24_10": "莫敢違者。",
    "X79n1560_024:0539a24_11": "嘗遣化十二輩。",
    "X79n1560_024:0539a24_12": "偉以其名付維那。",
    "X79n1560_024:0539b01_13": "使明日俱來。",
    "X79n1560_024:0539b01_14": "受曲折。",
    "X79n1560_024:0539b01_15": "及會茶輙失一人。",
    "X79n1560_024:0539b02_0": "偉問為誰。",
    "X79n1560_024:0539b02_1": "曰隨州永泰。",
    "X79n1560_024:0539b02_2": "偉方經營中。",
    "X79n1560_024:0539b02_3": "首座曰。",
    "X79n1560_024:0539b02_4": "泰游山去。",
    "X79n1560_024:0539b03_5": "請以他僧備員。",
    "X79n1560_024:0539b03_6": "偉然之。",
    "X79n1560_024:0539b03_7": "俄有告者曰。",
    "X79n1560_024:0539b03_8": "泰寔在。",
    "X79n1560_024:0539b03_9": "首座匿之。",
    "X79n1560_024:0539b04_10": "以欺眾耳。",
    "X79n1560_024:0539b04_11": "偉色莊使搜得之。",
    "X79n1560_024:0539b04_12": "泰自陳。",
    "X79n1560_024:0539b04_13": "怯弱懼失所受事。",
    "X79n1560_024:0539b05_14": "首座寔不知也。",
    "X79n1560_024:0539b05_15": "偉令擊鐘。",
    "X79n1560_024:0539b05_16": "集眾白曰。",
    "X79n1560_024:0539b05_17": "首座已分座授道。",
    "X79n1560_024:0539b06_18": "又老師所賞識。",
    "X79n1560_024:0539b06_19": "昧心罔眾。",
    "X79n1560_024:0539b06_20": "他人猶不可為。",
    "X79n1560_024:0539b07_0": "乃甘自破壞乎。",
    "X79n1560_024:0539b07_1": "首座屏息受罰。",
    "X79n1560_024:0539b07_2": "俱永泰者出院。",
    "X79n1560_024:0539b07_3": "諸方伏其公。",
    "X79n1560_024:0539b08_4": "泰後嗣其法。",
    "X79n1560_024:0539b08_5": "住黃蘗山。",
    "X79n1560_024:0539b08_6": "首座住溈山。",
    "X79n1560_024:0539b08_7": "嗣黃龍。",
    "X79n1560_024:0539b09_0": "偉夏夜坐深林。",
    "X79n1560_024:0539b09_1": "祖以食蚊蚋。",
    "X79n1560_024:0539b09_2": "會腸毒作。",
    "X79n1560_024:0539b09_3": "十日不愈。",
    "X79n1560_024:0539b09_4": "以刀絕之尺許。",
    "X79n1560_024:0539b10_5": "血流不止。",
    "X79n1560_024:0539b10_6": "門人泣曰。",
    "X79n1560_024:0539b10_7": "師獨奈何不少忍。",
    "X79n1560_024:0539b11_0": "曰。",
    "X79n1560_024:0539b11_1": "為其障我行道。",
    "X79n1560_024:0539b11_2": "蒲伏牀上。",
    "X79n1560_024:0539b11_3": "無所利於物。",
    "X79n1560_024:0539b11_4": "得死不愈于生乎。",
    "X79n1560_024:0539b12_5": "元豐三年十一月二十六日。",
    "X79n1560_024:0539b12_6": "說偈而化。",
    "X79n1560_024:0539b12_7": "後三日闍維。",
    "X79n1560_024:0539b13_8": "得五色舍利。",
    "X79n1560_024:0539b13_9": "骨石栓索勾連。",
    "X79n1560_024:0539b13_10": "塔于寺之東。",
    "X79n1560_024:0539b13_11": "閱世六十三。",
    "X79n1560_024:0539b14_12": "坐三十三夏。",
    "X79n1560_024:0539b15_0": "贊曰。",
    "X79n1560_024:0539b15_1": "法句經言。",
    "X79n1560_024:0539b15_2": "若起精進心。",
    "X79n1560_024:0539b15_3": "是妄非精進。",
    "X79n1560_024:0539b15_4": "觀偉施為。",
    "X79n1560_024:0539b16_0": "宜若起心者何哉。",
    "X79n1560_024:0539b16_1": "永嘉曰。",
    "X79n1560_024:0539b16_2": "晝夜精勤。",
    "X79n1560_024:0539b16_3": "恐緣差故。",
    "X79n1560_024:0539b16_4": "不惜身命。",
    "X79n1560_024:0539b17_5": "以知恩故。",
    "X79n1560_024:0539b17_6": "偉方畏緣差。",
    "X79n1560_024:0539b17_7": "負法道之恩。",
    "X79n1560_024:0539b17_8": "引雲門趙州。",
    "X79n1560_024:0539b18_9": "以自較渠。",
    "X79n1560_024:0539b18_10": "恤是真是妄哉。",
    "X79n1560_024:0539b18_11": "非志列秋霜。",
    "X79n1560_024:0539b18_12": "何以若此耶。",
    "X79n1560_024:0539b20_0": "東林照覺總禪師",
    "X79n1560_024:0539b21_0": "禪師名常生。",
    "X79n1560_024:0539b21_1": "劍州尤谿施氏。",
    "X79n1560_024:0539b21_2": "母夢男子。",
    "X79n1560_024:0539b21_3": "頎然色如金。",
    "X79n1560_024:0539b22_0": "握白芙蓉三柄。",
    "X79n1560_024:0539b22_1": "以授之。",
    "X79n1560_024:0539b22_2": "但一柄得。",
    "X79n1560_024:0539b22_3": "餘委地。",
    "X79n1560_024:0539b22_4": "覺而娠。",
    "X79n1560_024:0539b22_5": "後誕三子。",
    "X79n1560_024:0539b23_6": "伯仲皆不育。",
    "X79n1560_024:0539b23_7": "總其季也。",
    "X79n1560_024:0539b23_8": "年十一依寶雲寺文兆法師出家。",
    "X79n1560_024:0539b24_9": "又八年落髮。",
    "X79n1560_024:0539b24_10": "詣建州大中寺。",
    "X79n1560_024:0539b24_11": "契思律師受具。",
    "X79n1560_024:0539c01_12": "神觀秀異。",
    "X79n1560_024:0539c01_13": "鸞翔虎視。",
    "X79n1560_024:0539c01_14": "威掩萬僧。",
    "X79n1560_024:0539c01_15": "偉如也。",
    "X79n1560_024:0539c01_16": "初至吉州禾山。",
    "X79n1560_024:0539c02_17": "依禪智材公。",
    "X79n1560_024:0539c02_18": "材有人望。",
    "X79n1560_024:0539c02_19": "厚禮延之不留。",
    "X79n1560_024:0539c02_20": "聞南禪師之風。",
    "X79n1560_024:0539c03_21": "辭材至歸宗。",
    "X79n1560_024:0539c03_22": "久之無所得而去。",
    "X79n1560_024:0539c03_23": "歸宗寺火。",
    "X79n1560_024:0539c04_0": "南公遷石門南塔。",
    "X79n1560_024:0539c04_1": "又往從之。",
    "X79n1560_024:0539c04_2": "及南公自石門。",
    "X79n1560_024:0539c04_3": "而遷黃蘗積翠。",
    "X79n1560_024:0539c05_4": "自積翠而遷黃龍。",
    "X79n1560_024:0539c05_5": "總皆在焉。",
    "X79n1560_024:0539c05_6": "二十年之間。",
    "X79n1560_024:0539c05_7": "凡七往返。",
    "X79n1560_024:0539c06_8": "南公佳其勤勞。",
    "X79n1560_024:0539c06_9": "稱于眾。",
    "X79n1560_024:0539c06_10": "總自負密受。",
    "X79n1560_024:0539c06_11": "大法旨決。",
    "X79n1560_024:0539c07_12": "志將大掖臨濟之宗。",
    "X79n1560_024:0539c07_13": "名聲益遠。",
    "X79n1560_024:0539c07_14": "叢林爭追崇之。",
    "X79n1560_024:0539c07_15": "南公歿。",
    "X79n1560_024:0539c08_16": "哭之不成聲。",
    "X79n1560_024:0539c08_17": "戀戀不忍去。",
    "X79n1560_024:0539c08_18": "明年洪州太守榮公修撰。",
    "X79n1560_024:0539c09_19": "請住泐潭。",
    "X79n1560_024:0539c09_20": "其徒相語曰。",
    "X79n1560_024:0539c09_21": "馬祖再來也。",
    "X79n1560_024:0539c09_22": "道俗爭先願見。",
    "X79n1560_024:0539c10_23": "元豐三年　詔。",
    "X79n1560_024:0539c10_24": "革江州東林律居為禪席。",
    "X79n1560_024:0539c10_25": "觀文殿學士王公韶。",
    "X79n1560_024:0539c11_26": "出守南昌。",
    "X79n1560_024:0539c11_27": "欲延寶覺禪師心公。",
    "X79n1560_024:0539c11_28": "寶覺舉總自代。",
    "X79n1560_024:0539c12_29": "總知宵遁。",
    "X79n1560_024:0539c12_30": "去千餘里。",
    "X79n1560_024:0539c12_31": "王公檄諸郡。",
    "X79n1560_024:0539c12_32": "期必得之。",
    "X79n1560_024:0539c13_33": "竟得之新淦殊山窮谷中。",
    "X79n1560_024:0539c13_34": "遂應命。",
    "X79n1560_024:0539c13_35": "其徒又相語曰。",
    "X79n1560_024:0539c14_0": "遠公甞有讖記。",
    "X79n1560_024:0539c14_1": "曰。",
    "X79n1560_024:0539c14_2": "吾滅七百年後。",
    "X79n1560_024:0539c14_3": "有肉身大士。",
    "X79n1560_024:0539c14_4": "革吾道場。",
    "X79n1560_024:0539c15_5": "今符其語矣。",
    "X79n1560_024:0539c15_6": "總之名。",
    "X79n1560_024:0539c15_7": "遂聞天子。",
    "X79n1560_024:0539c15_8": "有詔住相國智海禪院。",
    "X79n1560_024:0539c16_9": "總固稱山野老病。",
    "X79n1560_024:0539c16_10": "不能奉詔。",
    "X79n1560_024:0539c16_11": "然州郡敦遣急於星火。",
    "X79n1560_024:0539c17_12": "其徒又相語曰。",
    "X79n1560_024:0539c17_13": "聦明泉者。",
    "X79n1560_024:0539c17_14": "適自涸(遠公所酌之泉。",
    "X79n1560_024:0539c17_15": "在方丈之西也)。",
    "X79n1560_024:0539c18_16": "凡兩月而得旨。",
    "X79n1560_024:0539c18_17": "如所乞。",
    "X79n1560_024:0539c18_18": "就賜紫伽梨。",
    "X79n1560_024:0539c18_19": "號廣惠。",
    "X79n1560_024:0539c18_20": "其徒又相語曰。",
    "X79n1560_024:0539c19_21": "聦明泉復湧沸矣。",
    "X79n1560_024:0539c19_22": "元祐三年。",
    "X79n1560_024:0539c19_23": "徐國王奏號。",
    "X79n1560_024:0539c20_24": "照覺禪師。",
    "X79n1560_024:0539c20_25": "總於衲子有大緣。",
    "X79n1560_024:0539c20_26": "槌拂之下。",
    "X79n1560_024:0539c20_27": "眾盈七百。",
    "X79n1560_024:0539c21_0": "總甞燕坐。",
    "X79n1560_024:0539c21_1": "私相告曰。",
    "X79n1560_024:0539c21_2": "方丈夜有白光。",
    "X79n1560_024:0539c21_3": "天香郁然。",
    "X79n1560_024:0539c21_4": "其得眾心如此。",
    "X79n1560_024:0539c22_5": "山門遣化。",
    "X79n1560_024:0539c22_6": "多邊徼瘴霧處。",
    "X79n1560_024:0539c22_7": "有死於其所者。",
    "X79n1560_024:0539c23_0": "總必泣設位祭奠。",
    "X79n1560_024:0539c23_1": "盡禮薦㧞。",
    "X79n1560_024:0539c23_2": "以故人人感動。",
    "X79n1560_024:0539c23_3": "羅漢系南禪師。",
    "X79n1560_024:0539c24_4": "祐公之子。",
    "X79n1560_024:0539c24_5": "有禪學。",
    "X79n1560_024:0539c24_6": "未為叢林所信。",
    "X79n1560_024:0539c24_7": "至東林。",
    "X79n1560_024:0539c24_8": "總大鐘橫撞。",
    "X79n1560_024:0540a01_9": "萬指出迎。",
    "X79n1560_024:0540a01_10": "於清谿之上。",
    "X79n1560_024:0540a01_11": "於是諸方傳之。",
    "X79n1560_024:0540a01_12": "號小南。",
    "X79n1560_024:0540a02_13": "其成就後學。",
    "X79n1560_024:0540a02_14": "又如此。",
    "X79n1560_024:0540a02_15": "總住持十二年。",
    "X79n1560_024:0540a02_16": "廈屋崇成。",
    "X79n1560_024:0540a03_0": "金碧照煙雲。",
    "X79n1560_024:0540a03_1": "如夜摩覩史之宮。",
    "X79n1560_024:0540a03_2": "從天而墮。",
    "X79n1560_024:0540a03_3": "天下學者。",
    "X79n1560_024:0540a04_0": "從風而靡。",
    "X79n1560_024:0540a04_1": "叢席之盛。",
    "X79n1560_024:0540a04_2": "近世所未有也。",
    "X79n1560_024:0540a04_3": "六年八月示疾。",
    "X79n1560_024:0540a05_0": "九月二十九日浴罷安坐。",
    "X79n1560_024:0540a05_1": "泊然而寂。",
    "X79n1560_024:0540a05_2": "十月八日全身葬於鴈門塔之東。",
    "X79n1560_024:0540a06_3": "閱世六十七。",
    "X79n1560_024:0540a06_4": "坐四十九夏。",
    "X79n1560_024:0540a07_0": "贊曰。",
    "X79n1560_024:0540a07_1": "予甞游東林。",
    "X79n1560_024:0540a07_2": "覧觀太息。",
    "X79n1560_024:0540a07_3": "念其剏(御名)之功。",
    "X79n1560_024:0540a07_4": "叢林之盛。",
    "X79n1560_024:0540a08_5": "非願力大士。",
    "X79n1560_024:0540a08_6": "莫能為之也。",
    "X79n1560_024:0540a08_7": "東坡詞曰。",
    "X79n1560_024:0540a08_8": "堂堂總公。",
    "X79n1560_024:0540a08_9": "僧中之龍。",
    "X79n1560_024:0540a09_10": "呼吸為雲。",
    "X79n1560_024:0540a09_11": "噫欠為風。",
    "X79n1560_024:0540a09_12": "是事且止。",
    "X79n1560_024:0540a09_13": "聊觀其一戲。",
    "X79n1560_024:0540a10_0": "蓋將談笑不起于座。",
    "X79n1560_024:0540a10_1": "而化廬山之下。",
    "X79n1560_024:0540a10_2": "為梵釋龍天之宮。",
    "X79n1560_024:0540a11_3": "渠不信夫。",
    "X79n1560_024:0540a13_0": "禪林僧寶傳卷第二十四"
}